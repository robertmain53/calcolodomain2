{
  "version": 1,

  "autoDiscover": {
    "include": ["sito_modificato/*.html"],
    "exclude": ["sito_modificato/index.html"]
  },

  "defaults": {
    "globalIds": [
      "siteHeader",
      "mainContent",
      "pageTitle",
      "pageSub",
      "errorBox",
      "calcHero",
      "inputsCard",
      "resultsCard",
      "howToUse",
      "pageMeta",
      "siteFooter"
    ],
    "globalIdOrder": [
      "siteHeader",
      "mainContent",
      "pageTitle",
      "pageSub",
      "errorBox",
      "calcHero",
      "inputsCard",
      "resultsCard",
      "howToUse",
      "pageMeta",
      "siteFooter"
    ],
    "globalClasses": [
      "container",
      "nav",
      "brand",
      "navRight",
      "pill",
      "calc-hero",
      "card",
      "btn",
      "btnSecondary",
      "alert",
      "meta-section",
      "content-card",
      "sub"
    ],

    "require": {
      "metaDetails": true,
      "buttons": false,
      "schedule": false,
      "csv": false
    },

    "featureMode": {
      "schedule": "if-present-then-validate",
      "csv": "if-present-then-validate",
      "metaDetails": "require",
      "buttons": "if-present-then-validate"
    },

    "safety": {
      "requireStrictIife": true,
      "requireDebounceIfUpdateExists": true,
      "forbidTokens": ["NaN", "Infinity"]
    }
  },

  "pages": [
    {
      "id": "mortgage-payment",
      "match": { "path": "sito_modificato/mortgage-payment.html" },
      "require": {
        "schedule": true,
        "csv": true,
        "buttons": true,
        "metaDetails": true
      }
    }
  ]
}
