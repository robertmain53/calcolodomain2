    <script>
      // Roof pitch calculator logic
      (function () {
        const unitSelect = document.getElementById("unitSelect");
        const spanInput = document.getElementById("spanInput");
        const overhangInput = document.getElementById("overhangInput");
        const riseInput = document.getElementById("riseInput");
        const runInput = document.getElementById("runInput");
        const pitchRise12Input = document.getElementById("pitchRise12Input");
        const angleInput = document.getElementById("angleInput");
        const percentInput = document.getElementById("percentInput");

        const spanUnitLabel = document.getElementById("spanUnitLabel");
        const overhangUnitLabel = document.getElementById("overhangUnitLabel");
        const riseUnitLabel = document.getElementById("riseUnitLabel");
        const runUnitLabel = document.getElementById("runUnitLabel");

        const resultPitch12 = document.getElementById("resultPitch12");
        const resultAngle = document.getElementById("resultAngle");
        const resultPercent = document.getElementById("resultPercent");
        const resultRiseRun = document.getElementById("resultRiseRun");
        const resultRun = document.getElementById("resultRun");
        const resultRise = document.getElementById("resultRise");
        const resultRafter = document.getElementById("resultRafter");
        const resultRafterOverhang = document.getElementById(
          "resultRafterOverhang"
        );
        const resultNote = document.getElementById("resultNote");

        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");

        const modes = ["rise-run", "pitch-12", "angle", "percent"];

        function setUnitLabels() {
          const u = unitSelect.value === "m" ? "m" : "ft";
          spanUnitLabel.textContent = u;
          overhangUnitLabel.textContent = u;
          riseUnitLabel.textContent = u;
          runUnitLabel.textContent = u;
        }

        unitSelect.addEventListener("change", setUnitLabels);
        setUnitLabels();

        // Tab switching
        modes.forEach((mode) => {
          const tab = document.querySelector('[data-mode="' + mode + '"]');
          const section = document.getElementById("mode-" + mode);
          tab.addEventListener("click", () => {
            modes.forEach((m) => {
              const t = document.querySelector('[data-mode="' + m + '"]');
              const s = document.getElementById("mode-" + m);
              if (m === mode) {
                t.classList.add("tab-active");
                t.setAttribute("aria-selected", "true");
                s.classList.remove("hidden");
              } else {
                t.classList.remove("tab-active");
                t.setAttribute("aria-selected", "false");
                s.classList.add("hidden");
              }
            });
          });
        });

        function formatNumber(val, decimals) {
          if (!isFinite(val)) return "–";
          return parseFloat(val.toFixed(decimals)).toString();
        }

        function clearResults() {
          resultPitch12.textContent = "–";
          resultAngle.textContent = "–";
          resultPercent.textContent = "–";
          resultRiseRun.textContent = "–";
          resultRun.textContent = "–";
          resultRise.textContent = "–";
          resultRafter.textContent = "–";
          resultRafterOverhang.textContent = "–";
          resultNote.textContent = "";
        }

        function getActiveMode() {
          const activeTab = document.querySelector(".tab-active");
          return activeTab ? activeTab.getAttribute("data-mode") : "rise-run";
        }

        function calculate() {
          clearResults();
          const mode = getActiveMode();

          let rise = null;
          let run = null;

          // Determine basic ratio rise/run
          if (mode === "rise-run") {
            const r = parseFloat(riseInput.value);
            const h = parseFloat(runInput.value);
            if (!(r > 0) || !(h > 0)) {
              alert("Please enter positive values for rise and run.");
              return;
            }
            rise = r;
            run = h;
          } else if (mode === "pitch-12") {
            const p = parseFloat(pitchRise12Input.value);
            if (!(p > 0)) {
              alert("Please enter a positive pitch value (rise per 12).");
              return;
            }
            // Use run = 12 units, rise = p units (relative)
            rise = p;
            run = 12;
          } else if (mode === "angle") {
            const a = parseFloat(angleInput.value);
            if (!(a > 0 && a < 90)) {
              alert("Please enter an angle between 0 and 90 degrees.");
              return;
            }
            const rad = (a * Math.PI) / 180;
            const ratio = Math.tan(rad);
            // Use run = 12 units for convenience
            run = 12;
            rise = ratio * run;
          } else if (mode === "percent") {
            const p = parseFloat(percentInput.value);
            if (!(p > 0)) {
              alert("Please enter a positive percent slope.");
              return;
            }
            const ratio = p / 100;
            run = 12;
            rise = ratio * run;
          }

          // Now we have a ratio rise/run. If span is provided, override run/rise to real dimensions.
          const span = parseFloat(spanInput.value);
          const overhang = parseFloat(overhangInput.value);
          const unitLabel = unitSelect.value === "m" ? "m" : "ft";

          let usedRun, usedRise;

          if (span > 0) {
            // For a simple gable, run is half the span
            usedRun = span / 2;
            const ratio = rise / run;
            usedRise = ratio * usedRun;
            resultNote.textContent =
              "Using half of span as run for a simple gable roof.";
          } else if (run > 0) {
            usedRun = run;
            usedRise = rise;
          } else {
            alert("Run must be greater than zero.");
            return;
          }

          const ratio = usedRise / usedRun;
          const pitch12 = ratio * 12;
          const angleDeg = (Math.atan(ratio) * 180) / Math.PI;
          const percentSlope = ratio * 100;
          const rafter = Math.sqrt(usedRise * usedRise + usedRun * usedRun);
          const rafterWithOverhang = rafter + (overhang > 0 ? overhang : 0);

          // Fill results
          resultPitch12.textContent = formatNumber(pitch12, 2) + ":12";
          resultAngle.textContent = formatNumber(angleDeg, 2) + "°";
          resultPercent.textContent = formatNumber(percentSlope, 1) + " %";
          resultRiseRun.textContent = "1 : " + formatNumber(1 / ratio, 2);

          resultRun.textContent = formatNumber(usedRun, 3) + " " + unitLabel;
          resultRise.textContent = formatNumber(usedRise, 3) + " " + unitLabel;
          resultRafter.textContent = formatNumber(rafter, 3) + " " + unitLabel;
          resultRafterOverhang.textContent =
            formatNumber(rafterWithOverhang, 3) + " " + unitLabel;

          if (!resultNote.textContent) {
            resultNote.textContent =
              "Results are based on a simple right‑triangle roof geometry.";
          }
        }

        calculateBtn.addEventListener("click", calculate);

        resetBtn.addEventListener("click", () => {
          document.getElementById("roofPitchForm").reset();
          setUnitLabels();
          clearResults();
        });

        // Sidebar quick reference table
        const sidebarPitchTable = document.getElementById("sidebarPitchTable");
        const commonPitches = [2, 3, 4, 5, 6, 8, 9, 10, 12];
        commonPitches.forEach((p) => {
          const ratio = p / 12;
          const angle = (Math.atan(ratio) * 180) / Math.PI;
          const percent = ratio * 100;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="border border-gray-200 px-2 py-1">${p}:12</td>
        <td class="border border-gray-200 px-2 py-1">${formatNumber(
          angle,
          1
        )}°</td>
        <td class="border border-gray-200 px-2 py-1">${formatNumber(
          percent,
          0
        )}%</td>
      `;
          sidebarPitchTable.appendChild(tr);
        });
      })();
    </script>

