    <script>
      // Utility functions
      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }
      function inToCm(inches) {
        return inches * 2.54;
      }

      // DOM elements
      const unitInBtn = document.getElementById("unit-in");
      const unitCmBtn = document.getElementById("unit-cm");
      const borderUnitLabel = document.getElementById("border-unit-label");
      const framingUnitLabel = document.getElementById("framing-unit-label");

      const stitchesWidthInput = document.getElementById("stitches-width");
      const stitchesHeightInput = document.getElementById("stitches-height");
      const fabricCountSelect = document.getElementById("fabric-count");
      const customCountWrapper = document.getElementById(
        "custom-count-wrapper"
      );
      const customCountInput = document.getElementById("custom-count");
      const stitchingStyleSelect = document.getElementById("stitching-style");
      const borderMarginInput = document.getElementById("border-margin");
      const framingMarginInput = document.getElementById("framing-margin");
      const orientationSelect = document.getElementById("orientation");

      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorMsg = document.getElementById("error-msg");

      const designSizeInSpan = document.getElementById("design-size-in");
      const designSizeCmSpan = document.getElementById("design-size-cm");
      const fabricSizeInSpan = document.getElementById("fabric-size-in");
      const fabricSizeCmSpan = document.getElementById("fabric-size-cm");
      const effectiveCountSpan = document.getElementById("effective-count");
      const frameSuggestionsInSpan = document.getElementById(
        "frame-suggestions-in"
      );
      const frameSuggestionsCmSpan = document.getElementById(
        "frame-suggestions-cm"
      );

      const previewDesign = document.getElementById("preview-design");
      const previewBorder = document.getElementById("preview-border");

      let unitMode = "in"; // 'in' or 'cm'

      function setUnitMode(mode) {
        if (mode === unitMode) return;
        const borderVal = parseFloat(borderMarginInput.value) || 0;
        const framingVal = parseFloat(framingMarginInput.value) || 0;

        if (mode === "cm") {
          borderMarginInput.value = roundTo(borderVal * 2.54, 2);
          framingMarginInput.value = roundTo(framingVal * 2.54, 2);
          borderUnitLabel.textContent = "cm";
          framingUnitLabel.textContent = "cm";
          unitInBtn.setAttribute("aria-pressed", "false");
          unitCmBtn.setAttribute("aria-pressed", "true");
        } else {
          borderMarginInput.value = roundTo(borderVal / 2.54, 2);
          framingMarginInput.value = roundTo(framingVal / 2.54, 2);
          borderUnitLabel.textContent = "in";
          framingUnitLabel.textContent = "in";
          unitInBtn.setAttribute("aria-pressed", "true");
          unitCmBtn.setAttribute("aria-pressed", "false");
        }
        unitMode = mode;
        calculate(); // refresh results
      }

      unitInBtn.addEventListener("click", () => setUnitMode("in"));
      unitCmBtn.addEventListener("click", () => setUnitMode("cm"));

      fabricCountSelect.addEventListener("change", () => {
        if (fabricCountSelect.value === "other") {
          customCountWrapper.classList.remove("hidden");
        } else {
          customCountWrapper.classList.add("hidden");
        }
        calculate();
      });

      [
        stitchesWidthInput,
        stitchesHeightInput,
        customCountInput,
        stitchingStyleSelect,
        borderMarginInput,
        framingMarginInput,
        orientationSelect,
      ].forEach((el) => {
        el.addEventListener("input", () => calculate());
        el.addEventListener("change", () => calculate());
      });

      function getFabricCount() {
        if (fabricCountSelect.value === "other") {
          const v = parseFloat(customCountInput.value);
          return isFinite(v) && v > 0 ? v : NaN;
        }
        return parseFloat(fabricCountSelect.value);
      }

      function calculate() {
        errorMsg.classList.add("hidden");
        errorMsg.textContent = "";

        const stitchesW = parseFloat(stitchesWidthInput.value);
        const stitchesH = parseFloat(stitchesHeightInput.value);
        const fabricCount = getFabricCount();
        const stitchingFactor = parseFloat(stitchingStyleSelect.value);
        let border = parseFloat(borderMarginInput.value);
        let framing = parseFloat(framingMarginInput.value);

        if (unitMode === "cm") {
          border = border / 2.54;
          framing = framing / 2.54;
        }

        if (
          !isFinite(stitchesW) ||
          stitchesW <= 0 ||
          !isFinite(stitchesH) ||
          stitchesH <= 0 ||
          !isFinite(fabricCount) ||
          fabricCount <= 0 ||
          !isFinite(stitchingFactor) ||
          stitchingFactor <= 0
        ) {
          designSizeInSpan.textContent = "–";
          designSizeCmSpan.textContent = "–";
          fabricSizeInSpan.textContent = "–";
          fabricSizeCmSpan.textContent = "–";
          effectiveCountSpan.textContent = "–";
          frameSuggestionsInSpan.textContent = "–";
          frameSuggestionsCmSpan.textContent = "–";
          return;
        }

        const effectiveCount = fabricCount / stitchingFactor;
        const designWidthIn = stitchesW / effectiveCount;
        const designHeightIn = stitchesH / effectiveCount;

        const extraPerSideIn = Math.max(0, border) + Math.max(0, framing);
        const totalWidthIn = designWidthIn + 2 * extraPerSideIn;
        const totalHeightIn = designHeightIn + 2 * extraPerSideIn;

        const designWidthCm = inToCm(designWidthIn);
        const designHeightCm = inToCm(designHeightIn);
        const totalWidthCm = inToCm(totalWidthIn);
        const totalHeightCm = inToCm(totalHeightIn);

        designSizeInSpan.textContent = `${roundTo(
          designWidthIn,
          2
        )} × ${roundTo(designHeightIn, 2)}`;
        designSizeCmSpan.textContent = `${roundTo(
          designWidthCm,
          1
        )} × ${roundTo(designHeightCm, 1)}`;
        fabricSizeInSpan.textContent = `${roundTo(totalWidthIn, 2)} × ${roundTo(
          totalHeightIn,
          2
        )}`;
        fabricSizeCmSpan.textContent = `${roundTo(totalWidthCm, 1)} × ${roundTo(
          totalHeightCm,
          1
        )}`;
        effectiveCountSpan.textContent = roundTo(effectiveCount, 2).toString();

        // Frame suggestions based on stitched design size only
        const framesIn = suggestFrames(designWidthIn, designHeightIn);
        if (framesIn.length === 0) {
          frameSuggestionsInSpan.textContent =
            "No common frame sizes found; consider a custom frame.";
          frameSuggestionsCmSpan.textContent = "";
        } else {
          frameSuggestionsInSpan.textContent = framesIn
            .map((f) => `${f.w}″ × ${f.h}″`)
            .join(", ");
          const framesCm = framesIn.map(
            (f) => `${roundTo(inToCm(f.w), 1)} × ${roundTo(inToCm(f.h), 1)} cm`
          );
          frameSuggestionsCmSpan.textContent = framesCm.join(", ");
        }

        updatePreview(
          designWidthIn,
          designHeightIn,
          totalWidthIn,
          totalHeightIn
        );
      }

      function suggestFrames(designW, designH) {
        const standardFrames = [
          { w: 4, h: 6 },
          { w: 5, h: 7 },
          { w: 6, h: 8 },
          { w: 8, h: 10 },
          { w: 9, h: 12 },
          { w: 10, h: 13 },
          { w: 11, h: 14 },
          { w: 12, h: 16 },
          { w: 14, h: 18 },
          { w: 16, h: 20 },
          { w: 18, h: 24 },
          { w: 20, h: 24 },
        ];

        const margin = 0.25; // minimum slack in inches
        const candidates = [];

        standardFrames.forEach((f) => {
          const fitsNormal = f.w >= designW + margin && f.h >= designH + margin;
          const fitsRotated =
            f.h >= designW + margin && f.w >= designH + margin;
          if (fitsNormal || fitsRotated) {
            const areaSlack = f.w * f.h - designW * designH;
            candidates.push({ w: f.w, h: f.h, slack: areaSlack });
          }
        });

        candidates.sort((a, b) => a.slack - b.slack);
        return candidates.slice(0, 3);
      }

      function updatePreview(designW, designH, totalW, totalH) {
        const containerWidth = 160;
        const containerHeight = 120;

        let w = totalW;
        let h = totalH;

        const orientation = orientationSelect.value;
        if (orientation === "portrait" && w > h) {
          [w, h] = [h, w];
          [designW, designH] = [designH, designW];
        } else if (orientation === "landscape" && h > w) {
          [w, h] = [h, w];
          [designW, designH] = [designH, designW];
        }

        const scale = Math.min(containerWidth / w, containerHeight / h, 1);
        const totalWpx = w * scale;
        const totalHpx = h * scale;
        const designWpx = designW * scale;
        const designHpx = designH * scale;

        const borderOffsetX = (totalWpx - designWpx) / 2;
        const borderOffsetY = (totalHpx - designHpx) / 2;

        previewBorder.style.left = `${(containerWidth - totalWpx) / 2}px`;
        previewBorder.style.top = `${(containerHeight - totalHpx) / 2}px`;
        previewBorder.style.width = `${totalWpx}px`;
        previewBorder.style.height = `${totalHpx}px`;

        previewDesign.style.left = `${
          (containerWidth - totalWpx) / 2 + borderOffsetX
        }px`;
        previewDesign.style.top = `${
          (containerHeight - totalHpx) / 2 + borderOffsetY
        }px`;
        previewDesign.style.width = `${designWpx}px`;
        previewDesign.style.height = `${designHpx}px`;
      }

      calculateBtn.addEventListener("click", calculate);

      resetBtn.addEventListener("click", () => {
        stitchesWidthInput.value = 120;
        stitchesHeightInput.value = 90;
        fabricCountSelect.value = "14";
        customCountWrapper.classList.add("hidden");
        customCountInput.value = 28;
        stitchingStyleSelect.value = "2";
        borderMarginInput.value = 1.0;
        framingMarginInput.value = 2.0;
        orientationSelect.value = "auto";
        setUnitMode("in");
        calculate();
      });

      // Initial calculation
      document.addEventListener("DOMContentLoaded", () => {
        calculate();
      });
    </script>

