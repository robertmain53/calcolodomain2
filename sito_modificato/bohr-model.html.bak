    <script>
      // Bohr model calculator logic
      (function () {
        const a0 = 5.29177210903e-11; // Bohr radius (m)
        const Eh = 13.6; // eV
        const eVtoJ = 1.602176634e-19;
        const h = 6.62607015e-34;
        const c = 299792458;

        const presetEl = document.getElementById("bohr-preset");
        const ZEl = document.getElementById("bohr-Z");
        const nEl = document.getElementById("bohr-n");
        const npEl = document.getElementById("bohr-np");
        const dirEl = document.getElementById("bohr-direction");
        const calcBtn = document.getElementById("bohr-calc-btn");
        const resetBtn = document.getElementById("bohr-reset-btn");
        const errorEl = document.getElementById("bohr-error");

        const resultsEl = document.getElementById("bohr-results");
        const radiusEl = document.getElementById("bohr-radius");
        const radiusA0El = document.getElementById("bohr-radius-a0");
        const energyEl = document.getElementById("bohr-energy");
        const energyJEl = document.getElementById("bohr-energy-j");
        const deltaEEl = document.getElementById("bohr-deltaE");
        const processEl = document.getElementById("bohr-process");
        const lambdaEl = document.getElementById("bohr-lambda");
        const freqEl = document.getElementById("bohr-frequency");
        const regionEl = document.getElementById("bohr-region");
        const transitionCard = document.getElementById("bohr-transition-card");
        const summaryEl = document.getElementById("bohr-summary");
        const seriesBadge = document.getElementById("bohr-series-badge");

        function formatSci(value, unit, digits = 3) {
          if (!isFinite(value) || isNaN(value)) return "—";
          const exp = Math.floor(Math.log10(Math.abs(value)));
          if (exp >= -3 && exp <= 3) {
            return value.toFixed(digits) + " " + unit;
          }
          const mant = value / Math.pow(10, exp);
          return mant.toFixed(digits) + " × 10^" + exp + " " + unit;
        }

        function classifyRegion(lambda_m) {
          const nm = lambda_m * 1e9;
          if (nm < 10) return "gamma / hard X-ray";
          if (nm < 100) return "X-ray";
          if (nm < 400) return "ultraviolet";
          if (nm <= 700) return "visible light";
          if (nm < 1e6) return "infrared";
          if (nm < 1e9) return "microwave";
          return "radio wave";
        }

        function spectralSeries(Z, nInitial, nFinal) {
          if (Z !== 1) return null;
          const nf = Math.min(nInitial, nFinal);
          switch (nf) {
            case 1:
              return "Lyman series (UV)";
            case 2:
              return "Balmer series (visible/UV)";
            case 3:
              return "Paschen series (IR)";
            case 4:
              return "Brackett series (IR)";
            case 5:
              return "Pfund series (IR)";
            case 6:
              return "Humphreys series (IR)";
            default:
              return null;
          }
        }

        presetEl.addEventListener("change", () => {
          const val = presetEl.value;
          if (val === "custom") return;
          ZEl.value = val;
        });

        resetBtn.addEventListener("click", () => {
          presetEl.value = "1";
          ZEl.value = 1;
          nEl.value = 1;
          npEl.value = 2;
          dirEl.value = "auto";
          errorEl.textContent = "";
          resultsEl.classList.add("hidden");
          transitionCard.classList.add("hidden");
          seriesBadge.classList.add("hidden");
          summaryEl.textContent = "";
        });

        calcBtn.addEventListener("click", () => {
          errorEl.textContent = "";
          resultsEl.classList.add("hidden");
          transitionCard.classList.add("hidden");
          seriesBadge.classList.add("hidden");
          summaryEl.textContent = "";

          let Z = parseInt(ZEl.value, 10);
          let n = parseInt(nEl.value, 10);
          let np = parseInt(npEl.value, 10);

          if (!Number.isFinite(Z) || Z <= 0) {
            errorEl.textContent =
              "Please enter a valid positive integer for Z.";
            return;
          }
          if (!Number.isFinite(n) || n < 1) {
            errorEl.textContent = "Please enter an initial level n ≥ 1.";
            return;
          }

          // Orbit radius and energy for level n
          const rn = ((n * n) / Z) * a0;
          const En_eV = (-Eh * Z * Z) / (n * n);
          const En_J = En_eV * eVtoJ;

          radiusEl.textContent = formatSci(rn, "m");
          radiusA0El.textContent = `≈ ${((n * n) / Z).toFixed(3)} × a₀`;
          energyEl.textContent = En_eV.toFixed(4) + " eV";
          energyJEl.textContent = formatSci(En_J, "J", 3);

          let hasTransition = Number.isFinite(np) && np >= 1 && np !== n;
          let summary = `For Z = ${Z}, level n = ${n}, the Bohr radius is rₙ ≈ ${formatSci(
            rn,
            "m"
          )} and the energy is ${En_eV.toFixed(4)} eV.`;

          if (hasTransition) {
            const Enp_eV = (-Eh * Z * Z) / (np * np);
            const deltaE_eV = Enp_eV - En_eV;
            const deltaE_J = deltaE_eV * eVtoJ;

            deltaEEl.textContent = `${deltaE_eV.toFixed(4)} eV (${formatSci(
              deltaE_J,
              "J",
              3
            )})`;

            let direction = dirEl.value;
            if (direction === "auto") {
              direction = np < n ? "emission" : "absorption";
            }

            const processText =
              direction === "emission"
                ? "Electron moves to a lower level; a photon is emitted."
                : "Electron moves to a higher level; a photon is absorbed.";
            processEl.textContent = processText;

            const lambda_m =
              Math.abs(deltaE_J) > 0 ? (h * c) / Math.abs(deltaE_J) : NaN;
            const freq = Math.abs(deltaE_J) > 0 ? Math.abs(deltaE_J) / h : NaN;

            lambdaEl.textContent = isFinite(lambda_m)
              ? `${(lambda_m * 1e9).toFixed(2)} nm (${formatSci(
                  lambda_m,
                  "m",
                  3
                )})`
              : "—";
            freqEl.textContent = isFinite(freq)
              ? `${formatSci(freq, "Hz", 3)}`
              : "—";

            if (isFinite(lambda_m)) {
              const region = classifyRegion(lambda_m);
              regionEl.textContent = `Approximate spectral region: ${region}.`;
            } else {
              regionEl.textContent = "";
            }

            const series = spectralSeries(Z, n, np);
            if (series) {
              seriesBadge.textContent = series;
              seriesBadge.classList.remove("hidden");
            }

            transitionCard.classList.remove("hidden");
            summary += ` A transition from n = ${n} to n′ = ${np} corresponds to a photon of wavelength ≈ ${(
              lambda_m * 1e9
            ).toFixed(1)} nm (${direction}).`;
          } else {
            transitionCard.classList.add("hidden");
          }

          summaryEl.textContent = summary;
          resultsEl.classList.remove("hidden");
        });

        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const ans = btn.parentElement.querySelector(".faq-answer");
              const isHidden = ans.classList.contains("hidden");
              ans.classList.toggle("hidden", !isHidden === false);
              ans.classList.toggle("hidden", !isHidden ? true : false);
            });
          });
      })();
    </script>
  
