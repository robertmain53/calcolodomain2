    <script>
      // Utility: format currency in GBP
      function formatGBP(value) {
        if (!isFinite(value)) return "£0";
        return new Intl.NumberFormat("en-GB", {
          style: "currency",
          currency: "GBP",
          maximumFractionDigits: 0,
        }).format(value);
      }

      function formatNumber(value) {
        if (!isFinite(value)) return "0";
        return new Intl.NumberFormat("en-GB", {
          maximumFractionDigits: 0,
        }).format(value);
      }

      function calculateSIPP() {
        const currentAge =
          parseFloat(document.getElementById("current-age").value) || 0;
        const retirementAge =
          parseFloat(document.getElementById("retirement-age").value) || 0;
        let years = retirementAge - currentAge;
        if (years < 0) years = 0;

        const currentPot = Math.max(
          0,
          parseFloat(document.getElementById("current-pot").value) || 0
        );
        const monthlyNet = Math.max(
          0,
          parseFloat(document.getElementById("monthly-contrib").value) || 0
        );
        const employerMonthly = Math.max(
          0,
          parseFloat(document.getElementById("employer-contrib").value) || 0
        );
        const annualIncrease =
          Math.max(
            0,
            parseFloat(document.getElementById("annual-increase").value) || 0
          ) / 100;

        const reliefRate =
          Math.max(
            0,
            parseFloat(document.getElementById("gross-relief-rate").value) || 0
          ) / 100;
        const grossPersonalMonthly = monthlyNet * (1 + reliefRate);
        let monthlyTotal = grossPersonalMonthly + employerMonthly;

        const grossReturn =
          (parseFloat(document.getElementById("annual-return").value) || 0) /
          100;
        const fees =
          (parseFloat(document.getElementById("annual-fees").value) || 0) / 100;
        const inflation =
          (parseFloat(document.getElementById("inflation").value) || 0) / 100;
        const withdrawalRate =
          (parseFloat(document.getElementById("withdrawal-rate").value) || 0) /
          100;

        // Net annual return after fees
        const netAnnualReturn = (1 + grossReturn) * (1 - fees) - 1;
        const monthlyReturn = Math.pow(1 + netAnnualReturn, 1 / 12) - 1;

        let pot = currentPot;
        let totalContrib = 0;

        // Year-by-year simulation with annual contribution increase
        for (let y = 0; y < years; y++) {
          for (let m = 0; m < 12; m++) {
            pot = pot * (1 + monthlyReturn) + monthlyTotal;
            totalContrib += monthlyTotal;
          }
          monthlyTotal *= 1 + annualIncrease;
        }

        const finalPot = pot;
        const realPot = finalPot / Math.pow(1 + inflation, years);
        const income = finalPot * withdrawalRate;
        const realIncome = income / Math.pow(1 + inflation, years);
        const growth = finalPot - totalContrib;

        document.getElementById("result-pot").textContent = formatGBP(finalPot);
        document.getElementById(
          "result-pot-real"
        ).textContent = `(≈ ${formatGBP(realPot)} in today's money)`;
        document.getElementById("result-income").textContent =
          formatGBP(income) + " / year";
        document.getElementById(
          "result-income-real"
        ).textContent = `(≈ ${formatGBP(
          realIncome
        )} per year in today's money)`;
        document.getElementById("result-total-contrib").textContent =
          formatGBP(totalContrib);
        document.getElementById("result-growth").textContent =
          formatGBP(growth);
        document.getElementById("result-years").textContent = `${formatNumber(
          years
        )} years`;

        document.getElementById("results-section").classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        calcBtn.addEventListener("click", calculateSIPP);

        resetBtn.addEventListener("click", function () {
          document.getElementById("current-age").value = 35;
          document.getElementById("retirement-age").value = 67;
          document.getElementById("current-pot").value = 20000;
          document.getElementById("monthly-contrib").value = 400;
          document.getElementById("employer-contrib").value = 0;
          document.getElementById("annual-increase").value = 0;
          document.getElementById("gross-relief-rate").value = 25;
          document.getElementById("annual-return").value = 5.0;
          document.getElementById("annual-fees").value = 0.75;
          document.getElementById("inflation").value = 2.5;
          document.getElementById("withdrawal-rate").value = 4.0;
          document.getElementById("results-section").classList.add("hidden");
          // Reset scenario tabs
          document
            .querySelectorAll(".scenario-tab")
            .forEach((btn) => btn.classList.remove("tab-active"));
          document
            .querySelector('[data-scenario="cautious"]')
            .classList.add("tab-active");
          applyScenario("cautious");
        });

        // Scenario tabs
        function applyScenario(name) {
          const annualReturnInput = document.getElementById("annual-return");
          const inflationInput = document.getElementById("inflation");

          if (name === "cautious") {
            // 3% real with 2.5% inflation ≈ 5.6% nominal
            annualReturnInput.value = 5.6;
            inflationInput.value = 2.5;
          } else if (name === "balanced") {
            // 4% real with 2.5% inflation ≈ 6.6% nominal
            annualReturnInput.value = 6.6;
            inflationInput.value = 2.5;
          } else if (name === "adventurous") {
            // 5% real with 2.5% inflation ≈ 7.6% nominal
            annualReturnInput.value = 7.6;
            inflationInput.value = 2.5;
          } // custom leaves fields as user set
        }

        document.querySelectorAll(".scenario-tab").forEach((btn) => {
          btn.addEventListener("click", function () {
            document
              .querySelectorAll(".scenario-tab")
              .forEach((b) => b.classList.remove("tab-active"));
            this.classList.add("tab-active");
            const scenario = this.getAttribute("data-scenario");
            if (scenario !== "custom") {
              applyScenario(scenario);
            }
          });
        });

        // Auto-calc on load with default cautious scenario
        applyScenario("cautious");
        calculateSIPP();
      });
    </script>

