    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        return (
          sign +
          abs.toLocaleString(undefined, {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }

      function formatMonths(value) {
        if (!isFinite(value) || value <= 0) return "0 mo";
        if (value < 12) return value.toFixed(1).replace(/\.0$/, "") + " mo";
        const years = value / 12;
        if (years < 10) return years.toFixed(1).replace(/\.0$/, "") + " yr";
        return years.toFixed(0) + " yr";
      }

      function calculateDisability() {
        const annualIncome =
          parseFloat(document.getElementById("annualIncome").value) || 0;
        const monthlyExpenses =
          parseFloat(document.getElementById("monthlyExpenses").value) || 0;
        const targetReplacement =
          (parseFloat(document.getElementById("targetReplacement").value) ||
            0) / 100;
        const eliminationPeriodDays =
          parseInt(document.getElementById("eliminationPeriod").value, 10) || 0;
        const employerPct =
          (parseFloat(document.getElementById("employerPct").value) || 0) / 100;
        const govMonthly =
          parseFloat(document.getElementById("govMonthly").value) || 0;
        const liquidSavings =
          parseFloat(document.getElementById("liquidSavings").value) || 0;
        const otherMonthlyIncome =
          parseFloat(document.getElementById("otherMonthlyIncome").value) || 0;

        const monthlyIncome = annualIncome / 12;
        const targetMonthly = monthlyIncome * targetReplacement;

        const employerBenefit = monthlyIncome * employerPct;
        const totalBenefits = employerBenefit + govMonthly + otherMonthlyIncome;

        const gap = Math.max(0, targetMonthly - totalBenefits);
        const replacementPct =
          monthlyIncome > 0 ? (totalBenefits / monthlyIncome) * 100 : 0;

        // Savings runway
        const runwayBefore =
          monthlyExpenses > 0 ? liquidSavings / monthlyExpenses : 0;
        const shortfallAfter = Math.max(0, monthlyExpenses - totalBenefits);
        const runwayAfter =
          shortfallAfter > 0 ? liquidSavings / shortfallAfter : Infinity;

        // Update UI
        document.getElementById("targetMonthlyDisplay").textContent =
          formatCurrency(targetMonthly);
        document.getElementById("totalBenefitsDisplay").textContent =
          formatCurrency(totalBenefits);
        document.getElementById("gapDisplay").textContent = formatCurrency(gap);
        document.getElementById("replacementPctDisplay").textContent =
          (isFinite(replacementPct) ? replacementPct.toFixed(0) : "0") + "%";
        document.getElementById("runwayBeforeDisplay").textContent =
          formatMonths(runwayBefore);
        document.getElementById("runwayAfterDisplay").textContent =
          runwayAfter === Infinity ? "No gap" : formatMonths(runwayAfter);

        const gapLabel = document.getElementById("gapLabel");
        if (gap <= 0) {
          gapLabel.textContent =
            "Your existing benefits meet or exceed your target income.";
          document
            .getElementById("gapDisplay")
            .classList.remove("text-red-700");
          document.getElementById("gapDisplay").classList.add("text-green-700");
        } else {
          gapLabel.textContent =
            "Approximate additional monthly disability benefit to reach your target.";
          document
            .getElementById("gapDisplay")
            .classList.remove("text-green-700");
          document.getElementById("gapDisplay").classList.add("text-red-700");
        }

        const interp = document.getElementById("interpretationText");
        if (!annualIncome || !monthlyExpenses) {
          interp.textContent =
            "Enter your income and expenses to see a personalized disability coverage estimate.";
          return;
        }

        let message = "";
        if (replacementPct >= targetReplacement * 100) {
          message +=
            "Your current benefits appear to replace at least your target share of income. ";
          if (runwayBefore * 30 < eliminationPeriodDays) {
            message +=
              "However, your savings may not fully cover the elimination period before long-term benefits begin.";
          } else {
            message +=
              "Your savings also look reasonably strong for the elimination period.";
          }
        } else if (replacementPct >= 40) {
          message +=
            "Your benefits replace a moderate share of your income, but you still have a noticeable coverage gap. ";
          message +=
            "Consider whether adding private long-term disability coverage to close the gap fits your budget.";
        } else {
          message +=
            "Your current benefits replace a relatively small share of your income. ";
          message +=
            "A significant disability could require drawing heavily on savings or reducing expenses. ";
          message +=
            "You may want to explore additional disability insurance or building a larger emergency fund.";
        }

        interp.textContent = message;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const targetReplacementInput =
          document.getElementById("targetReplacement");
        const targetReplacementValue = document.getElementById(
          "targetReplacementValue"
        );
        const employerPctInput = document.getElementById("employerPct");
        const employerPctValue = document.getElementById("employerPctValue");

        function syncRangeDisplay(input, display, suffix = "%") {
          input.addEventListener("input", () => {
            display.textContent = input.value + suffix;
          });
        }

        syncRangeDisplay(targetReplacementInput, targetReplacementValue);
        syncRangeDisplay(employerPctInput, employerPctValue);

        document
          .getElementById("calculateBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculateDisability();
          });

        document
          .getElementById("resetBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("annualIncome").value = 80000;
            document.getElementById("monthlyExpenses").value = 3500;
            document.getElementById("targetReplacement").value = 65;
            document.getElementById("targetReplacementValue").textContent =
              "65%";
            document.getElementById("eliminationPeriod").value = 90;
            document.getElementById("employerPct").value = 40;
            document.getElementById("employerPctValue").textContent = "40%";
            document.getElementById("govMonthly").value = 1500;
            document.getElementById("liquidSavings").value = 20000;
            document.getElementById("otherMonthlyIncome").value = 0;
            document.getElementById("interpretationText").textContent =
              "Enter your information and click “Calculate coverage” to see your disability insurance needs.";
            document.getElementById("targetMonthlyDisplay").textContent = "$0";
            document.getElementById("totalBenefitsDisplay").textContent = "$0";
            document.getElementById("gapDisplay").textContent = "$0";
            document.getElementById("replacementPctDisplay").textContent = "0%";
            document.getElementById("runwayBeforeDisplay").textContent = "0 mo";
            document.getElementById("runwayAfterDisplay").textContent = "0 mo";
            document.getElementById("gapLabel").textContent =
              "Additional monthly disability insurance recommended.";
            document
              .getElementById("gapDisplay")
              .classList.remove("text-green-700", "text-red-700");
          });

        // Initial calculation with defaults
        calculateDisability();
      });

