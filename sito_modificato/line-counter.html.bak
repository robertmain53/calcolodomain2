    <script>
      (function () {
        const textarea = document.getElementById("line-input");
        const fileInput = document.getElementById("file-input");
        const fileNameEl = document.getElementById("file-name");
        const trimCheckbox = document.getElementById("trim-lines");
        const ignoreEmptyCheckbox = document.getElementById("ignore-empty");
        const lineEndingSelect = document.getElementById("line-ending");
        const clearBtn = document.getElementById("clear-btn");
        const copyBtn = document.getElementById("copy-report-btn");
        const copyStatus = document.getElementById("copy-status");

        const statTotalLines = document.getElementById("stat-total-lines");
        const statNonEmptyLines = document.getElementById(
          "stat-nonempty-lines"
        );
        const statEmptyLines = document.getElementById("stat-empty-lines");
        const statAvgLength = document.getElementById("stat-avg-length");
        const statChars = document.getElementById("stat-chars");
        const statCharsNoSpace = document.getElementById("stat-chars-nospace");
        const statWords = document.getElementById("stat-words");
        const statLongest = document.getElementById("stat-longest");
        const statLongestIndex = document.getElementById("stat-longest-index");
        const statEnding = document.getElementById("stat-ending");

        function detectLineEnding(text) {
          const crlf = (text.match(/\r\n/g) || []).length;
          const lf = (text.match(/(?<!\r)\n/g) || []).length;
          const cr = (text.match(/\r(?!\n)/g) || []).length;

          if (!text) return "–";
          if (crlf >= lf && crlf >= cr && crlf > 0) return "Windows (CRLF)";
          if (lf >= cr && lf > 0) return "Unix / macOS (LF)";
          if (cr > 0) return "Old Mac (CR)";
          return "Unknown";
        }

        function normalizeLineEndings(text) {
          const mode = lineEndingSelect.value;
          if (mode === "auto") {
            // Only normalize CRLF and CR to LF for counting
            return text.replace(/\r\n/g, "\n").replace(/\r/g, "\n");
          } else if (mode === "lf") {
            return text.replace(/\r\n/g, "\n").replace(/\r/g, "\n");
          } else if (mode === "crlf") {
            // Normalize to LF first, then to CRLF
            const tmp = text.replace(/\r\n/g, "\n").replace(/\r/g, "\n");
            return tmp.replace(/\n/g, "\r\n");
          }
          return text;
        }

        function countWords(text) {
          const trimmed = text.trim();
          if (!trimmed) return 0;
          const parts = trimmed.split(/\s+/);
          return parts.filter(Boolean).length;
        }

        function updateStats() {
          let text = textarea.value || "";
          const detected = detectLineEnding(text);
          statEnding.textContent = detected;

          // For counting, normalize to LF internally
          let normalized = text.replace(/\r\n/g, "\n").replace(/\r/g, "\n");

          const lines = normalized.length ? normalized.split("\n") : [];
          const totalLines = lines.length || (normalized.length ? 1 : 0);

          let nonEmpty = 0;
          let empty = 0;
          let totalChars = text.length;
          let totalCharsNoSpace = text.replace(/[ \t]/g, "").length;
          let longestLen = 0;
          let longestIndex = null;

          const trimLines = trimCheckbox.checked;
          const ignoreWhitespaceOnly = ignoreEmptyCheckbox.checked;

          lines.forEach((line, idx) => {
            const original = line;
            const trimmed = trimLines ? line.trim() : line;

            const isEmpty = trimmed.length === 0;
            if (isEmpty) {
              empty++;
            } else {
              nonEmpty++;
            }

            if (ignoreWhitespaceOnly && isEmpty) {
              // do not consider for longest line if ignoring whitespace-only
            } else {
              const len = original.length;
              if (len > longestLen) {
                longestLen = len;
                longestIndex = idx + 1;
              }
            }
          });

          const avgLen = totalLines > 0 ? totalChars / totalLines : 0;

          statTotalLines.textContent = totalLines;
          statNonEmptyLines.textContent = nonEmpty;
          statEmptyLines.textContent = empty;
          statChars.textContent = totalChars;
          statCharsNoSpace.textContent = totalCharsNoSpace + " chars";
          statWords.textContent = countWords(normalized);
          statAvgLength.textContent = avgLen.toFixed(1);
          statLongest.textContent = longestLen;
          statLongestIndex.textContent = longestIndex
            ? "Line " + longestIndex
            : "Line –";
        }

        textarea.addEventListener("input", updateStats);
        trimCheckbox.addEventListener("change", updateStats);
        ignoreEmptyCheckbox.addEventListener("change", updateStats);
        lineEndingSelect.addEventListener("change", updateStats);

        clearBtn.addEventListener("click", function () {
          textarea.value = "";
          fileInput.value = "";
          fileNameEl.textContent = "";
          updateStats();
        });

        fileInput.addEventListener("change", function (e) {
          const file = e.target.files && e.target.files[0];
          if (!file) return;
          fileNameEl.textContent = file.name;
          const reader = new FileReader();
          reader.onload = function (evt) {
            const content = evt.target.result || "";
            textarea.value = content;
            updateStats();
          };
          reader.readAsText(file);
        });

        copyBtn.addEventListener("click", function () {
          const summary = [
            "Line Counter Summary",
            "--------------------",
            "Total lines: " + statTotalLines.textContent,
            "Non-empty lines: " + statNonEmptyLines.textContent,
            "Empty lines: " + statEmptyLines.textContent,
            "Characters: " + statChars.textContent,
            "Characters (no spaces): " +
              statCharsNoSpace.textContent.replace(" chars", ""),
            "Words: " + statWords.textContent,
            "Average line length: " + statAvgLength.textContent,
            "Longest line length: " +
              statLongest.textContent +
              " (" +
              statLongestIndex.textContent +
              ")",
            "Detected line ending: " + statEnding.textContent,
          ].join("\n");

          if (navigator.clipboard && navigator.clipboard.writeText) {
            navigator.clipboard
              .writeText(summary)
              .then(function () {
                copyStatus.textContent = "Summary copied to clipboard.";
                setTimeout(function () {
                  copyStatus.textContent = "";
                }, 2500);
              })
              .catch(function () {
                copyStatus.textContent =
                  "Unable to copy. Please copy manually.";
                setTimeout(function () {
                  copyStatus.textContent = "";
                }, 2500);
              });
          } else {
            const temp = document.createElement("textarea");
            temp.value = summary;
            document.body.appendChild(temp);
            temp.select();
            try {
              document.execCommand("copy");
              copyStatus.textContent = "Summary copied to clipboard.";
            } catch (e) {
              copyStatus.textContent = "Unable to copy. Please copy manually.";
            }
            document.body.removeChild(temp);
            setTimeout(function () {
              copyStatus.textContent = "";
            }, 2500);
          }
        });

        // Initial stats
        updateStats();
      })();
    </script>

