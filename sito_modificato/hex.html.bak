            <script>
              (function() {
                // helpers
                function normalizeHex(input) {
                  if (!input) return null;
                  let hex = input.trim().toLowerCase();
                  hex = hex.replace(/^0x/, '');
                  hex = hex.replace(/^#/, '');
                  if (hex.length === 3) {
                    // expand to 6
                    hex = hex.split('').map(c => c + c).join('');
                  }
                  if (hex.length !== 6) {
                    return null;
                  }
                  if (!/^[0-9a-f]{6}$/i.test(hex)) {
                    return null;
                  }
                  return hex;
                }

                function hexToRgb(hex) {
                  const h = normalizeHex(hex);
                  if (!h) return null;
                  return {
                    r: parseInt(h.slice(0, 2), 16),
                    g: parseInt(h.slice(2, 4), 16),
                    b: parseInt(h.slice(4, 6), 16),
                    hex: h
                  };
                }

                function componentToHex(c) {
                  const v = Math.max(0, Math.min(255, c));
                  const h = v.toString(16).toUpperCase();
                  return h.length === 1 ? '0' + h : h;
                }

                function rgbToHex(r, g, b) {
                  if (
                    typeof r !== 'number' || typeof g !== 'number' || typeof b !== 'number' ||
                    isNaN(r) || isNaN(g) || isNaN(b)
                  ) return null;
                  return componentToHex(r) + componentToHex(g) + componentToHex(b);
                }

                function toBinary(num) {
                  if (typeof num !== 'number' || isNaN(num)) return null;
                  return num.toString(2);
                }

                // elements
                const hexInput = document.getElementById('hex-input');
                const hexError = document.getElementById('hex-error');
                const btnFromHex = document.getElementById('btn-from-hex');
                const colorSwatch = document.getElementById('color-swatch');
                const colorHexDisplay = document.getElementById('color-hex-display');

                const rgbR = document.getElementById('rgb-r');
                const rgbG = document.getElementById('rgb-g');
                const rgbB = document.getElementById('rgb-b');
                const btnFromRgb = document.getElementById('btn-from-rgb');

                const decInput = document.getElementById('dec-input');
                const btnFromDec = document.getElementById('btn-from-dec');

                const binInput = document.getElementById('bin-input');
                const btnFromBin = document.getElementById('btn-from-bin');

                const resultHex = document.getElementById('result-hex');
                const resultRgb = document.getElementById('result-rgb');
                const resultDec = document.getElementById('result-dec');
                const resultBin = document.getElementById('result-bin');

                function updateColorPreview(hex) {
                  if (hex) {
                    colorSwatch.style.background = '#' + hex;
                    colorHexDisplay.textContent = '#' + hex;
                  } else {
                    colorSwatch.style.background = 'white';
                    colorHexDisplay.textContent = '—';
                  }
                }

                function updateOutputs(hex, rgb, dec, bin) {
                  resultHex.textContent = hex ? '#' + hex.toUpperCase() : '—';
                  if (rgb && typeof rgb.r === 'number') {
                    resultRgb.textContent = 'rgb(' + rgb.r + ', ' + rgb.g + ', ' + rgb.b + ')';
                  } else {
                    resultRgb.textContent = '—';
                  }
                  resultDec.textContent = typeof dec === 'number' && !isNaN(dec) ? dec.toString() : '—';
                  resultBin.textContent = bin ? bin : '—';
                }

                // HEX → all
                btnFromHex.addEventListener('click', function() {
                  const val = hexInput.value;
                  const parsed = hexToRgb(val);
                  if (!parsed) {
                    hexError.classList.remove('hidden');
                    updateColorPreview(null);
                    updateOutputs(null, null, null, null);
                    return;
                  }
                  hexError.classList.add('hidden');
                  // update RGB fields
                  rgbR.value = parsed.r;
                  rgbG.value = parsed.g;
                  rgbB.value = parsed.b;
                  // decimal representation: often we show each channel; but we can show combined integer too
                  // let's show combined as 0xRRGGBB → decimal
                  const dec = parseInt(parsed.hex, 16);
                  const bin = dec.toString(2);
                  updateColorPreview(parsed.hex);
                  updateOutputs(parsed.hex, parsed, dec, bin);
                });

                // RGB → HEX
                btnFromRgb.addEventListener('click', function() {
                  const r = parseInt(rgbR.value, 10);
                  const g = parseInt(rgbG.value, 10);
                  const b = parseInt(rgbB.value, 10);
                  if (
                    isNaN(r) || isNaN(g) || isNaN(b) ||
                    r < 0 || r > 255 || g < 0 || g > 255 || b < 0 || b > 255
                  ) {
                    updateOutputs(null, null, null, null);
                    updateColorPreview(null);
                    return;
                  }
                  const hex = rgbToHex(r, g, b);
                  hexInput.value = '#' + hex;
                  const dec = parseInt(hex, 16);
                  const bin = dec.toString(2);
                  updateColorPreview(hex);
                  updateOutputs(hex, { r, g, b }, dec, bin);
                  hexError.classList.add('hidden');
                });

                // Decimal → HEX
                btnFromDec.addEventListener('click', function() {
                  const dec = parseInt(decInput.value, 10);
                  if (isNaN(dec) || dec < 0) {
                    updateOutputs(null, null, null, null);
                    updateColorPreview(null);
                    return;
                  }
                  const hex = dec.toString(16).toUpperCase();
                  // if <= 0xFFFFFF we can preview as a color
                  const padded = hex.length < 6 ? hex.padStart(6, '0') : hex;
                  hexInput.value = '#' + padded;
                  updateColorPreview(padded);
                  // derive RGB only if 6 hex digits
                  const parsed = hexToRgb(padded);
                  const bin = dec.toString(2);
                  updateOutputs(padded, parsed, dec, bin);
                  hexError.classList.add('hidden');
                });

                // Binary → HEX
                btnFromBin.addEventListener('click', function() {
                  const bin = binInput.value.trim();
                  if (!/^[01]+$/.test(bin)) {
                    updateOutputs(null, null, null, null);
                    updateColorPreview(null);
                    return;
                  }
                  const dec = parseInt(bin, 2);
                  const hex = dec.toString(16).toUpperCase();
                  const padded = hex.length < 6 ? hex.padStart(6, '0') : hex;
                  hexInput.value = '#' + padded;
                  updateColorPreview(padded);
                  const parsed = hexToRgb(padded);
                  updateOutputs(padded, parsed, dec, bin);
                  hexError.classList.add('hidden');
                });
              })();
            </script>

