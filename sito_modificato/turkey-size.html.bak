    <script>
      function roundToStep(value, step) {
        return Math.round(value / step) * step;
      }

      function formatWeight(value, unit) {
        if (!isFinite(value) || value <= 0) return "—";
        const rounded =
          unit === "lb" ? roundToStep(value, 0.5) : roundToStep(value, 0.1);
        return unit === "lb"
          ? rounded.toFixed(1).replace(/\.0$/, "") + " lb"
          : rounded.toFixed(1) + " kg";
      }

      function formatDaysHours(hours) {
        if (!isFinite(hours) || hours <= 0) return "—";
        const totalMinutes = Math.round(hours * 60);
        const d = Math.floor(totalMinutes / (60 * 24));
        const h = Math.round((totalMinutes - d * 24 * 60) / 60);
        const parts = [];
        if (d > 0) parts.push(d + " day" + (d === 1 ? "" : "s"));
        if (h > 0) parts.push(h + " hr" + (h === 1 ? "" : "s"));
        return parts.join(" ");
      }

      function formatHours(hours) {
        if (!isFinite(hours) || hours <= 0) return "—";
        const totalMinutes = Math.round(hours * 60);
        const h = Math.floor(totalMinutes / 60);
        const m = totalMinutes % 60;
        if (h === 0) return m + " min";
        if (m === 0) return h + " hr" + (h === 1 ? "" : "s");
        return h + " hr " + m + " min";
      }

      function calculateTurkey() {
        const adults =
          parseInt(document.getElementById("adults").value, 10) || 0;
        const children =
          parseInt(document.getElementById("children").value, 10) || 0;
        const leftovers = document.getElementById("leftovers").value;
        const turkeyType = document.getElementById("turkey-type").value;
        const unit = document.getElementById("unit").value;
        const stuffed = document.getElementById("stuffed").value;

        if (adults + children <= 0) {
          document.getElementById("size-output").textContent =
            "Please enter at least one guest.";
          document.getElementById("fridge-thaw-output").textContent = "—";
          document.getElementById("water-thaw-output").textContent = "—";
          document.getElementById("cook-time-output").textContent = "—";
          document.getElementById("brine-output").textContent = "—";
          return;
        }

        // Base per-person weights in lb for whole turkey
        let wa, wc;
        if (leftovers === "none") {
          wa = 1.0;
          wc = 0.5;
        } else if (leftovers === "some") {
          wa = 1.25;
          wc = 0.6;
        } else {
          wa = 1.5;
          wc = 0.75;
        }

        // Adjust for turkey type (crown/breast has less bone)
        if (turkeyType === "crown") {
          wa *= 0.75;
          wc *= 0.75;
        }

        let totalLb = adults * wa + children * wc;
        if (totalLb < 2) totalLb = 2; // minimum reasonable size

        const totalKg = totalLb * 0.45359237;
        const displayWeight = unit === "lb" ? totalLb : totalKg;

        // Thawing times
        const fridgeDays = totalLb / 4.5; // 24h per 4–5 lb
        const waterHours = totalLb * 0.5; // 0.5 h per lb

        // Cooking time (hours)
        let minutesPerLb;
        if (turkeyType === "whole") {
          minutesPerLb = stuffed === "yes" ? 15 : 14;
        } else {
          minutesPerLb = stuffed === "yes" ? 14 : 13;
        }
        const cookHours = (totalLb * minutesPerLb) / 60;

        // Brine volume (quarts & liters)
        const quarts = totalLb / 1.25; // 1 qt per 1–1.5 lb
        const liters = quarts * 0.946353;

        document.getElementById("size-output").textContent = formatWeight(
          displayWeight,
          unit
        );
        document.getElementById("size-note").textContent =
          (turkeyType === "whole"
            ? "Whole turkey"
            : "Turkey crown/breast only") +
          " with " +
          (leftovers === "none"
            ? "no leftovers."
            : leftovers === "some"
            ? "some leftovers."
            : "plenty of leftovers.");

        document.getElementById("fridge-thaw-output").textContent =
          formatDaysHours(fridgeDays * 24);
        document.getElementById("water-thaw-output").textContent =
          formatHours(waterHours);

        document.getElementById("cook-time-output").textContent =
          formatHours(cookHours);

        const brineText =
          quarts.toFixed(1).replace(/\.0$/, "") +
          " qt  (~" +
          liters.toFixed(1) +
          " L)";
        document.getElementById("brine-output").textContent = brineText;
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateTurkey);
      document
        .getElementById("unit")
        .addEventListener("change", calculateTurkey);
      document
        .getElementById("turkey-type")
        .addEventListener("change", calculateTurkey);
      document
        .getElementById("leftovers")
        .addEventListener("change", calculateTurkey);
      document
        .getElementById("stuffed")
        .addEventListener("change", calculateTurkey);

      ["adults", "children"].forEach((id) => {
        document.getElementById(id).addEventListener("input", () => {
          // Debounce-like behavior: simple immediate recalc is fine for small inputs
          calculateTurkey();
        });
      });

      // Initial calculation
      calculateTurkey();
    </script>

