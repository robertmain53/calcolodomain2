    <script>
      // Utility formatting
      function formatCurrency(value) {
        if (!isFinite(value)) return "–";
        const abs = Math.abs(value);
        const options = {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: abs >= 1000 ? 0 : 2,
        };
        return new Intl.NumberFormat("en-US", options).format(value);
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "–";
        return value.toFixed(1) + "%";
      }

      function formatNumber(value, digits = 2) {
        if (!isFinite(value)) return "–";
        return value.toFixed(digits);
      }

      // Elements
      const modeSimpleBtn = document.getElementById("mode-simple");
      const modeDetailedBtn = document.getElementById("mode-detailed");
      const simpleInputs = document.getElementById("simple-inputs");
      const detailedInputs = document.getElementById("detailed-inputs");
      const numPeriodsInput = document.getElementById("num-periods");
      const periodTypeSelect = document.getElementById("period-type");
      const discountRateInput = document.getElementById("discount-rate");
      const riskAdjustmentInput = document.getElementById("risk-adjustment");
      const cashflowRows = document.getElementById("cashflow-rows");
      const resetDetailedBtn = document.getElementById("reset-detailed");
      const calculateBtn = document.getElementById("calculate-btn");
      const clearBtn = document.getElementById("clear-btn");
      const errorEl = document.getElementById("calc-error");

      const resultRoi = document.getElementById("result-roi");
      const resultNetBenefit = document.getElementById("result-net-benefit");
      const resultTotalCosts = document.getElementById("result-total-costs");
      const resultTotalBenefits = document.getElementById(
        "result-total-benefits"
      );
      const resultPayback = document.getElementById("result-payback");
      const resultNpv = document.getElementById("result-npv");
      const resultBcr = document.getElementById("result-bcr");
      const resultIrr = document.getElementById("result-irr");

      let currentMode = "simple";

      function setMode(mode) {
        currentMode = mode;
        if (mode === "simple") {
          modeSimpleBtn.classList.add("bg-blue-600", "text-white");
          modeSimpleBtn.classList.remove("bg-white", "text-gray-700");
          modeDetailedBtn.classList.remove("bg-blue-600", "text-white");
          modeDetailedBtn.classList.add("bg-white", "text-gray-700");
          simpleInputs.classList.remove("hidden");
          detailedInputs.classList.add("hidden");
        } else {
          modeDetailedBtn.classList.add("bg-blue-600", "text-white");
          modeDetailedBtn.classList.remove("bg-white", "text-gray-700");
          modeSimpleBtn.classList.remove("bg-blue-600", "text-white");
          modeSimpleBtn.classList.add("bg-white", "text-gray-700");
          simpleInputs.classList.add("hidden");
          detailedInputs.classList.remove("hidden");
          buildCashflowTable();
        }
      }

      modeSimpleBtn.addEventListener("click", () => setMode("simple"));
      modeDetailedBtn.addEventListener("click", () => setMode("detailed"));

      function buildCashflowTable() {
        const n = Math.max(
          1,
          Math.min(50, parseInt(numPeriodsInput.value, 10) || 1)
        );
        cashflowRows.innerHTML = "";
        for (let t = 0; t <= n; t++) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1.5 border-t text-gray-700">${t}</td>
        <td class="px-3 py-1.5 border-t text-right">
          <input type="number" step="0.01" class="w-28 md:w-32 text-right border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 cf-cost" data-period="${t}">
        </td>
        <td class="px-3 py-1.5 border-t text-right">
          <input type="number" step="0.01" class="w-28 md:w-32 text-right border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 cf-benefit" data-period="${t}">
        </td>
      `;
          cashflowRows.appendChild(tr);
        }
      }

      numPeriodsInput.addEventListener("change", () => {
        if (currentMode === "detailed") buildCashflowTable();
      });

      resetDetailedBtn.addEventListener("click", () => {
        const costInputs = cashflowRows.querySelectorAll(".cf-cost");
        const benefitInputs = cashflowRows.querySelectorAll(".cf-benefit");
        costInputs.forEach((input, idx) => {
          input.value = idx === 0 ? 0 : 0;
        });
        benefitInputs.forEach((input) => (input.value = 0));
      });

      function getAnnualToPeriodRate(annualRate, periodType) {
        const r = annualRate / 100;
        if (periodType === "year") return r;
        return Math.pow(1 + r, 1 / 12) - 1;
      }

      function computeNPV(cashflows, ratePerPeriod) {
        let npv = 0;
        for (let t = 0; t < cashflows.length; t++) {
          npv += cashflows[t] / Math.pow(1 + ratePerPeriod, t);
        }
        return npv;
      }

      function computePayback(cashflows, periodType) {
        let cumulative = 0;
        for (let t = 0; t < cashflows.length; t++) {
          const prev = cumulative;
          cumulative += cashflows[t];
          if (prev < 0 && cumulative >= 0) {
            const fraction = cashflows[t] !== 0 ? -prev / cashflows[t] : 0;
            const periods = t - 1 + fraction;
            if (periodType === "year") return periods.toFixed(2) + " years";
            return periods.toFixed(2) + " periods";
          }
        }
        return cumulative >= 0 ? "Within horizon" : "Not recovered";
      }

      function computeIRR(cashflows, periodType) {
        // Simple binary search between -0.99 and 5 (i.e., -99% to 500% per period)
        let low = -0.99,
          high = 5,
          mid;
        const maxIter = 60;
        const tol = 1e-6;
        const f = (r) => computeNPV(cashflows, r);

        let fLow = f(low),
          fHigh = f(high);
        if (isNaN(fLow) || isNaN(fHigh) || fLow * fHigh > 0) {
          return null;
        }

        for (let i = 0; i < maxIter; i++) {
          mid = (low + high) / 2;
          const fMid = f(mid);
          if (Math.abs(fMid) < tol) break;
          if (fLow * fMid < 0) {
            high = mid;
            fHigh = fMid;
          } else {
            low = mid;
            fLow = fMid;
          }
        }

        let irrPerPeriod = mid;
        if (!isFinite(irrPerPeriod)) return null;

        // Convert to annualized IRR if periodType is month
        if (periodType === "month") {
          irrPerPeriod = Math.pow(1 + irrPerPeriod, 12) - 1;
        }
        return irrPerPeriod * 100;
      }

      function clearResults() {
        resultRoi.textContent = "–";
        resultNetBenefit.textContent = "–";
        resultTotalCosts.textContent = "–";
        resultTotalBenefits.textContent = "–";
        resultPayback.textContent = "–";
        resultNpv.textContent = "–";
        resultBcr.textContent = "–";
        resultIrr.textContent = "–";
      }

      clearBtn.addEventListener("click", () => {
        document.getElementById("simple-upfront-cost").value = "";
        document.getElementById("simple-ongoing-cost").value = "";
        document.getElementById("simple-benefit").value = "";
        document.getElementById("simple-residual").value = "";
        discountRateInput.value = "10";
        riskAdjustmentInput.value = "0";
        numPeriodsInput.value = "5";
        periodTypeSelect.value = "year";
        if (currentMode === "detailed") buildCashflowTable();
        clearResults();
        errorEl.classList.add("hidden");
        errorEl.textContent = "";
      });

      calculateBtn.addEventListener("click", () => {
        errorEl.classList.add("hidden");
        errorEl.textContent = "";
        clearResults();

        const n = Math.max(
          1,
          Math.min(50, parseInt(numPeriodsInput.value, 10) || 1)
        );
        const periodType = periodTypeSelect.value;
        const annualRate = parseFloat(discountRateInput.value);
        const riskAdj = parseFloat(riskAdjustmentInput.value) || 0;

        if (isNaN(annualRate) || annualRate < -99) {
          errorEl.textContent = "Please enter a valid discount rate.";
          errorEl.classList.remove("hidden");
          return;
        }

        const ratePerPeriod = getAnnualToPeriodRate(annualRate, periodType);
        let totalCosts = 0;
        let totalBenefits = 0;
        const cashflows = [];

        if (currentMode === "simple") {
          const upfront =
            parseFloat(document.getElementById("simple-upfront-cost").value) ||
            0;
          const ongoing =
            parseFloat(document.getElementById("simple-ongoing-cost").value) ||
            0;
          const benefit =
            parseFloat(document.getElementById("simple-benefit").value) || 0;
          const residual =
            parseFloat(document.getElementById("simple-residual").value) || 0;

          // Period 0
          const b0 = 0;
          const c0 = upfront;
          const adjB0 = b0 * (1 - riskAdj / 100);
          cashflows.push(adjB0 - c0);
          totalCosts += c0;
          totalBenefits += adjB0;

          for (let t = 1; t <= n; t++) {
            const c = ongoing;
            let b = benefit;
            if (t === n) b += residual;
            const adjB = b * (1 - riskAdj / 100);
            cashflows.push(adjB - c);
            totalCosts += c;
            totalBenefits += adjB;
          }
        } else {
          const costInputs = cashflowRows.querySelectorAll(".cf-cost");
          const benefitInputs = cashflowRows.querySelectorAll(".cf-benefit");
          if (costInputs.length === 0 || benefitInputs.length === 0) {
            buildCashflowTable();
          }
          const rows = cashflowRows.querySelectorAll("tr");
          rows.forEach((row, idx) => {
            const costInput = row.querySelector(".cf-cost");
            const benefitInput = row.querySelector(".cf-benefit");
            const c = parseFloat(costInput.value) || 0;
            const b = parseFloat(benefitInput.value) || 0;
            const adjB = b * (1 - riskAdj / 100);
            cashflows.push(adjB - c);
            totalCosts += c;
            totalBenefits += adjB;
          });
        }

        if (totalCosts <= 0) {
          errorEl.textContent =
            "Total costs must be greater than zero to compute ROI.";
          errorEl.classList.remove("hidden");
          return;
        }

        const netBenefit = totalBenefits - totalCosts;
        const roi = (netBenefit / totalCosts) * 100;
        const npv = computeNPV(cashflows, ratePerPeriod);
        const bcr = totalCosts > 0 ? totalBenefits / totalCosts : NaN;
        const payback = computePayback(cashflows, periodType);
        const irr = computeIRR(cashflows, periodType);

        resultRoi.textContent = formatPercent(roi);
        resultNetBenefit.textContent = formatCurrency(netBenefit);
        resultTotalCosts.textContent = formatCurrency(totalCosts);
        resultTotalBenefits.textContent = formatCurrency(totalBenefits);
        resultNpv.textContent = formatCurrency(npv);
        resultBcr.textContent = isFinite(bcr) ? formatNumber(bcr, 2) : "–";
        resultPayback.textContent = payback;
        resultIrr.textContent = irr === null ? "N/A" : formatPercent(irr);
      });

      // Initialize
      buildCashflowTable();
    </script>

