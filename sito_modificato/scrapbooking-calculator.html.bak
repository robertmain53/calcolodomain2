    <script>
      // Utility: format number with fixed decimals, trimming trailing zeros
      function fmt(num, decimals = 2) {
        if (!isFinite(num)) return "-";
        const s = num.toFixed(decimals);
        return s.replace(/\.0+$/, "").replace(/(\.\d*[1-9])0+$/, "$1");
      }

      function getUnitLabel() {
        const unit = document.getElementById("unitSelect").value;
        return unit === "cm" ? "cm" : "in";
      }

      // Album presets
      document
        .getElementById("albumPreset")
        .addEventListener("change", function () {
          const unit = document.getElementById("unitSelect").value;
          const w = document.getElementById("pageWidth");
          const h = document.getElementById("pageHeight");
          const val = this.value;

          if (val === "12x12") {
            w.value = 12;
            h.value = 12;
            document.getElementById("unitSelect").value = "in";
          } else if (val === "8.5x11") {
            w.value = 8.5;
            h.value = 11;
            document.getElementById("unitSelect").value = "in";
          } else if (val === "6x8") {
            w.value = 6;
            h.value = 8;
            document.getElementById("unitSelect").value = "in";
          } else if (val === "A4") {
            w.value = 21;
            h.value = 29.7;
            document.getElementById("unitSelect").value = "cm";
          }
        });

      // Layout calculation
      document
        .getElementById("calcLayoutBtn")
        .addEventListener("click", function () {
          const unit = getUnitLabel();

          const N =
            parseInt(document.getElementById("photoCount").value, 10) || 0;
          const C = Math.max(
            1,
            parseInt(document.getElementById("layoutColumns").value, 10) || 1
          );
          const w = Math.max(
            0,
            parseFloat(document.getElementById("photoWidth").value) || 0
          );
          const h = Math.max(
            0,
            parseFloat(document.getElementById("photoHeight").value) || 0
          );
          const b = Math.max(
            0,
            parseFloat(document.getElementById("matBorder").value) || 0
          );
          const s = Math.max(
            0,
            parseFloat(document.getElementById("spacing").value) || 0
          );
          const m = Math.max(
            0,
            parseFloat(document.getElementById("pageMargin").value) || 0
          );
          const Wp = Math.max(
            0,
            parseFloat(document.getElementById("pageWidth").value) || 0
          );
          const Hp = Math.max(
            0,
            parseFloat(document.getElementById("pageHeight").value) || 0
          );

          const summaryEl = document.getElementById("layoutSummary");
          const resultsEl = document.getElementById("layoutResults");

          if (!N || !w || !h || !Wp || !Hp) {
            summaryEl.innerHTML =
              '<p class="text-red-600">Please enter valid values for photos and page size.</p>';
            resultsEl.classList.remove("hidden");
            return;
          }

          const wMat = w + 2 * b;
          const hMat = h + 2 * b;
          const rows = Math.ceil(N / C);

          const Wlayout = C * wMat + (C - 1) * s;
          const Hlayout = rows * hMat + (rows - 1) * s;

          const Wusable = Math.max(0, Wp - 2 * m);
          const Husable = Math.max(0, Hp - 2 * m);

          const fitsHoriz = Wlayout <= Wusable + 1e-6;
          const fitsVert = Hlayout <= Husable + 1e-6;
          const fits = fitsHoriz && fitsVert;

          const pageArea = Wp * Hp;
          const layoutArea = Wlayout * Hlayout;
          const usedPct = pageArea > 0 ? (layoutArea / pageArea) * 100 : 0;

          let html = "";
          html += `<p><strong>Grid:</strong> ${rows} row(s) × ${C} photo(s) per row (total ${N} photos).</p>`;
          html += `<p><strong>Photo size:</strong> ${fmt(w)} × ${fmt(
            h
          )} ${unit}`;
          if (b > 0) {
            html += `, mat size: ${fmt(wMat)} × ${fmt(
              hMat
            )} ${unit} (border ${fmt(b)} ${unit})`;
          }
          html += `.</p>`;
          html += `<p><strong>Layout span:</strong> ${fmt(Wlayout)} × ${fmt(
            Hlayout
          )} ${unit} (within page usable area ${fmt(Wusable)} × ${fmt(
            Husable
          )} ${unit}).</p>`;
          html += `<p><strong>Page usage:</strong> approx. ${fmt(
            usedPct
          )}% of total page area.</p>`;

          if (fits) {
            html += `<p class="text-emerald-700 font-semibold mt-1">✅ This layout fits within your page margins.</p>`;
          } else {
            html += `<p class="text-red-700 font-semibold mt-1">⚠ This layout does <em>not</em> fully fit within your page margins.</p>`;
            if (!fitsHoriz) {
              html += `<p class="text-sm text-red-700">• Too wide: reduce photos per row, photo width, mat border, or spacing.</p>`;
            }
            if (!fitsVert) {
              html += `<p class="text-sm text-red-700">• Too tall: reduce number of rows, photo height, mat border, or spacing.</p>`;
            }
          }

          summaryEl.innerHTML = html;
          resultsEl.classList.remove("hidden");
        });

      // Cutting planner
      document
        .getElementById("calcCuttingBtn")
        .addEventListener("click", function () {
          const unit = getUnitLabel();

          const Ws = Math.max(
            0,
            parseFloat(document.getElementById("sheetWidth").value) || 0
          );
          const Hs = Math.max(
            0,
            parseFloat(document.getElementById("sheetHeight").value) || 0
          );
          const w = Math.max(
            0,
            parseFloat(document.getElementById("pieceWidth").value) || 0
          );
          const h = Math.max(
            0,
            parseFloat(document.getElementById("pieceHeight").value) || 0
          );
          const t = Math.max(
            0,
            parseFloat(document.getElementById("trimMargin").value) || 0
          );

          const summaryEl = document.getElementById("cuttingSummary");
          const resultsEl = document.getElementById("cuttingResults");

          if (!Ws || !Hs || !w || !h) {
            summaryEl.innerHTML =
              '<p class="text-red-600">Please enter valid values for sheet and piece size.</p>';
            resultsEl.classList.remove("hidden");
            return;
          }

          const Weff = Math.max(0, Ws - 2 * t);
          const Heff = Math.max(0, Hs - 2 * t);

          function pieces(We, He, pw, ph) {
            const nx = Math.floor(We / pw);
            const ny = Math.floor(He / ph);
            return {
              nx,
              ny,
              total: Math.max(0, nx * ny),
              usedArea: Math.max(0, nx * pw * ny * ph),
            };
          }

          const orient1 = pieces(Weff, Heff, w, h);
          const orient2 = pieces(Weff, Heff, h, w);

          const sheetArea = Ws * Hs;
          const best = orient2.total > orient1.total ? orient2 : orient1;
          const bestLabel =
            orient2.total > orient1.total
              ? "Rotated pieces"
              : "Standard orientation";
          const usedPct = sheetArea > 0 ? (best.usedArea / sheetArea) * 100 : 0;

          let html = "";
          html += `<p><strong>Effective sheet size:</strong> ${fmt(
            Weff
          )} × ${fmt(Heff)} ${unit} (after trim margin).</p>`;
          html += `<p><strong>Standard orientation:</strong> ${orient1.nx} × ${orient1.ny} = ${orient1.total} piece(s) per sheet.</p>`;
          html += `<p><strong>Rotated orientation:</strong> ${orient2.nx} × ${orient2.ny} = ${orient2.total} piece(s) per sheet.</p>`;
          html += `<p class="mt-1"><strong>Best option:</strong> ${bestLabel} → <strong>${
            best.total
          }</strong> piece(s) per sheet, using about ${fmt(
            usedPct
          )}% of the sheet area.</p>`;
          html += `<p class="text-xs text-gray-600 mt-1">Tip: If you need more pieces, consider reducing the trim margin or slightly adjusting piece size.</p>`;

          summaryEl.innerHTML = html;
          resultsEl.classList.remove("hidden");
        });

      // Quick presets
      document.querySelectorAll("[data-preset]").forEach((btn) => {
        btn.addEventListener("click", () => {
          const preset = btn.getAttribute("data-preset");
          const unitSel = document.getElementById("unitSelect");

          if (preset === "two-4x6") {
            unitSel.value = "in";
            document.getElementById("albumPreset").value = "12x12";
            document.getElementById("pageWidth").value = 12;
            document.getElementById("pageHeight").value = 12;
            document.getElementById("photoCount").value = 2;
            document.getElementById("photoWidth").value = 4;
            document.getElementById("photoHeight").value = 6;
            document.getElementById("layoutColumns").value = 2;
            document.getElementById("matBorder").value = 0.25;
            document.getElementById("spacing").value = 0.5;
            document.getElementById("pageMargin").value = 0.75;
          } else if (preset === "four-3x4") {
            unitSel.value = "in";
            document.getElementById("albumPreset").value = "12x12";
            document.getElementById("pageWidth").value = 12;
            document.getElementById("pageHeight").value = 12;
            document.getElementById("photoCount").value = 4;
            document.getElementById("photoWidth").value = 3;
            document.getElementById("photoHeight").value = 4;
            document.getElementById("layoutColumns").value = 2;
            document.getElementById("matBorder").value = 0.25;
            document.getElementById("spacing").value = 0.5;
            document.getElementById("pageMargin").value = 1;
          } else if (preset === "grid-9-3x3") {
            unitSel.value = "in";
            document.getElementById("albumPreset").value = "12x12";
            document.getElementById("pageWidth").value = 12;
            document.getElementById("pageHeight").value = 12;
            document.getElementById("photoCount").value = 9;
            document.getElementById("photoWidth").value = 3;
            document.getElementById("photoHeight").value = 3;
            document.getElementById("layoutColumns").value = 3;
            document.getElementById("matBorder").value = 0.125;
            document.getElementById("spacing").value = 0.25;
            document.getElementById("pageMargin").value = 0.5;
          } else if (preset === "card-front") {
            unitSel.value = "in";
            document.getElementById("albumPreset").value = "custom";
            document.getElementById("pageWidth").value = 4.25;
            document.getElementById("pageHeight").value = 5.5;
            document.getElementById("photoCount").value = 1;
            document.getElementById("photoWidth").value = 3.75;
            document.getElementById("photoHeight").value = 5;
            document.getElementById("layoutColumns").value = 1;
            document.getElementById("matBorder").value = 0;
            document.getElementById("spacing").value = 0;
            document.getElementById("pageMargin").value = 0.25;
          }

          // Optionally auto-run layout calc
          document.getElementById("calcLayoutBtn").click();
        });
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
