    <script>
      function formatCurrency(value) {
        if (isNaN(value)) return "–";
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          abs.toLocaleString("en-DE", {
            style: "currency",
            currency: "EUR",
            maximumFractionDigits: 0,
          })
        );
      }

      function formatPercent(value) {
        if (isNaN(value)) return "–";
        return value.toFixed(2) + " %";
      }

      function recalcAllowance() {
        const entityType = document.getElementById("entityType").value;
        const allowanceInput = document.getElementById("allowance");
        if (entityType === "partnership") {
          if (Number(allowanceInput.value) === 0) {
            allowanceInput.value = 24500;
          }
        } else {
          allowanceInput.value = 0;
        }
      }

      document
        .getElementById("entityType")
        .addEventListener("change", recalcAllowance);

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const profit =
            parseFloat(document.getElementById("profit").value) || 0;
          const interest =
            parseFloat(document.getElementById("interestAddback").value) || 0;
          const rentReal =
            parseFloat(document.getElementById("rentRealEstate").value) || 0;
          const rentMov =
            parseFloat(document.getElementById("rentMovables").value) || 0;
          const royalties =
            parseFloat(document.getElementById("royalties").value) || 0;
          const lossCF =
            parseFloat(document.getElementById("lossCarryforward").value) || 0;
          const allowance =
            parseFloat(document.getElementById("allowance").value) || 0;
          const hebesatz =
            parseFloat(document.getElementById("hebesatz").value) || 0;

          // Simplified interest add-back: 25% of amount above 200,000
          const interestThreshold = 200000;
          const interestAddback =
            interest > interestThreshold
              ? 0.25 * (interest - interestThreshold)
              : 0;

          const rentRealAddback = 0.5 * rentReal;
          const rentMovAddback = 0.2 * rentMov;
          const royaltiesAddback = 0.25 * royalties;

          let adjustedProfit =
            profit +
            interestAddback +
            rentRealAddback +
            rentMovAddback +
            royaltiesAddback -
            lossCF;

          // Trade income before allowance cannot be negative
          if (adjustedProfit < 0) adjustedProfit = 0;

          const tradeIncomeBeforeAllowance = adjustedProfit;
          let taxableTradeIncome = tradeIncomeBeforeAllowance - allowance;
          if (taxableTradeIncome < 0) taxableTradeIncome = 0;

          const baseRate = 0.035; // 3.5%
          const baseTradeTax = taxableTradeIncome * baseRate;
          const tradeTaxDue = baseTradeTax * (hebesatz / 100);
          const effectiveRate = baseRate * (hebesatz / 100) * 100; // in %

          document.getElementById("adjustedProfit").textContent =
            formatCurrency(adjustedProfit);
          document.getElementById("tradeIncomeBeforeAllowance").textContent =
            formatCurrency(tradeIncomeBeforeAllowance);
          document.getElementById("taxableTradeIncome").textContent =
            formatCurrency(taxableTradeIncome);
          document.getElementById("baseTradeTax").textContent =
            formatCurrency(baseTradeTax);
          document.getElementById("tradeTaxDue").textContent =
            formatCurrency(tradeTaxDue);
          document.getElementById("effectiveRate").textContent = isNaN(
            effectiveRate
          )
            ? "–"
            : formatPercent(effectiveRate);
        });

      // Initial allowance setup and calculation
      recalcAllowance();
      document.getElementById("calculateBtn").click();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
