    <script>
      // Risk Assessment Matrix logic
      (function () {
        const likelihoodLabels = {
          1: "Very Low",
          2: "Low",
          3: "Medium",
          4: "High",
          5: "Very High",
        };
        const impactLabels = {
          1: "Insignificant",
          2: "Minor",
          3: "Moderate",
          4: "Major",
          5: "Catastrophic",
        };

        let matrixSize = 3;
        let risks = [];

        const matrixTable = document.getElementById("risk-matrix");
        const riskTableBody = document.getElementById("risk-table-body");
        const riskEmptyRow = document.getElementById("risk-empty-row");
        const likelihoodSelect = document.getElementById("likelihood-select");
        const impactSelect = document.getElementById("impact-select");
        const thresholdLowInput = document.getElementById("threshold-low");
        const thresholdMediumInput =
          document.getElementById("threshold-medium");
        const thresholdHighInput = document.getElementById("threshold-high");

        function getThresholds() {
          const low = parseInt(thresholdLowInput.value, 10) || 0;
          const med = parseInt(thresholdMediumInput.value, 10) || 0;
          const high = parseInt(thresholdHighInput.value, 10) || 0;
          return { low, med, high };
        }

        function getRiskCategory(score) {
          const { low, med, high } = getThresholds();
          if (score <= low) return "Low";
          if (score <= med) return "Medium";
          if (score <= high) return "High";
          return "Critical";
        }

        function getRiskClass(category) {
          switch (category) {
            case "Low":
              return "risk-low";
            case "Medium":
              return "risk-medium";
            case "High":
              return "risk-high";
            case "Critical":
              return "risk-critical";
            default:
              return "";
          }
        }

        function getBadgeClass(category) {
          switch (category) {
            case "Low":
              return "risk-badge-low";
            case "Medium":
              return "risk-badge-medium";
            case "High":
              return "risk-badge-high";
            case "Critical":
              return "risk-badge-critical";
            default:
              return "";
          }
        }

        function buildSelectOptions() {
          likelihoodSelect.innerHTML = "";
          impactSelect.innerHTML = "";
          for (let i = 1; i <= matrixSize; i++) {
            const lOpt = document.createElement("option");
            lOpt.value = i;
            lOpt.textContent = `${i} – ${likelihoodLabels[i] || "Level " + i}`;
            likelihoodSelect.appendChild(lOpt);

            const iOpt = document.createElement("option");
            iOpt.value = i;
            iOpt.textContent = `${i} – ${impactLabels[i] || "Level " + i}`;
            impactSelect.appendChild(iOpt);
          }
        }

        function buildMatrix() {
          const theadRow = matrixTable.tHead.rows[0];
          // Remove existing impact headers except first
          while (theadRow.cells.length > 1) {
            theadRow.deleteCell(1);
          }
          for (let i = 1; i <= matrixSize; i++) {
            const th = document.createElement("th");
            th.className = "border border-gray-200 bg-gray-50 p-2 text-center";
            th.textContent = `${i}`;
            th.title = impactLabels[i] || `Impact level ${i}`;
            theadRow.appendChild(th);
          }

          const tbody = matrixTable.tBodies[0];
          tbody.innerHTML = "";

          for (let l = matrixSize; l >= 1; l--) {
            const tr = document.createElement("tr");

            const likelihoodHeader = document.createElement("th");
            likelihoodHeader.className =
              "border border-gray-200 bg-gray-50 p-2 text-center";
            likelihoodHeader.textContent = l;
            likelihoodHeader.title =
              likelihoodLabels[l] || `Likelihood level ${l}`;
            tr.appendChild(likelihoodHeader);

            for (let i = 1; i <= matrixSize; i++) {
              const score = l * i;
              const category = getRiskCategory(score);
              const td = document.createElement("td");
              td.className = `border border-gray-200 text-center align-middle risk-cell ${getRiskClass(
                category
              )}`;
              td.dataset.likelihood = l;
              td.dataset.impact = i;
              td.title = `Likelihood ${l}, Impact ${i}, Score ${score} (${category})`;
              td.innerHTML = `<div class="py-2">
              <div class="font-semibold text-xs">${score}</div>
              <div class="text-[10px] text-gray-700">${category}</div>
            </div>`;
              td.addEventListener("click", () => {
                likelihoodSelect.value = l;
                impactSelect.value = i;
                document.getElementById("risk-name").focus();
              });
              tr.appendChild(td);
            }

            tbody.appendChild(tr);
          }
        }

        function renderRisks() {
          riskTableBody.innerHTML = "";
          if (risks.length === 0) {
            riskTableBody.appendChild(riskEmptyRow);
            return;
          }
          risks.forEach((risk, index) => {
            const tr = document.createElement("tr");
            const score = risk.likelihood * risk.impact;
            const category = getRiskCategory(score);

            tr.innerHTML = `
          <td class="border border-gray-200 p-2 text-center">${index + 1}</td>
          <td class="border border-gray-200 p-2">${risk.name || "-"}</td>
          <td class="border border-gray-200 p-2">${risk.owner || "-"}</td>
          <td class="border border-gray-200 p-2 text-center">${
            risk.likelihood
          }</td>
          <td class="border border-gray-200 p-2 text-center">${risk.impact}</td>
          <td class="border border-gray-200 p-2 text-center font-semibold">${score}</td>
          <td class="border border-gray-200 p-2 text-center">
            <span class="risk-badge ${getBadgeClass(category)}">
              <span class="risk-dot ${
                category === "Low"
                  ? "bg-green-500"
                  : category === "Medium"
                  ? "bg-yellow-400"
                  : category === "High"
                  ? "bg-red-400"
                  : "bg-red-700"
              }"></span>
              ${category}
            </span>
          </td>
          <td class="border border-gray-200 p-2">${risk.notes || "-"}</td>
          <td class="border border-gray-200 p-2 text-center">
            <button type="button" data-index="${index}" class="delete-risk-btn text-xs text-red-600 hover:underline">Delete</button>
          </td>
        `;
            riskTableBody.appendChild(tr);
          });

          document.querySelectorAll(".delete-risk-btn").forEach((btn) => {
            btn.addEventListener("click", () => {
              const idx = parseInt(btn.getAttribute("data-index"), 10);
              if (!isNaN(idx)) {
                risks.splice(idx, 1);
                renderRisks();
              }
            });
          });
        }

        function addRiskFromForm() {
          const name = document.getElementById("risk-name").value.trim();
          const owner = document.getElementById("risk-owner").value.trim();
          const notes = document.getElementById("risk-notes").value.trim();
          const likelihood = parseInt(likelihoodSelect.value, 10);
          const impact = parseInt(impactSelect.value, 10);

          if (!likelihood || !impact) return;

          risks.push({ name, owner, notes, likelihood, impact });
          document.getElementById("risk-name").value = "";
          document.getElementById("risk-owner").value = "";
          document.getElementById("risk-notes").value = "";
          renderRisks();
        }

        function exportCSV() {
          if (risks.length === 0) return;
          const headers = [
            "#",
            "Risk",
            "Owner",
            "Likelihood",
            "Impact",
            "Score",
            "Rating",
            "Notes",
          ];
          const rows = [headers];

          risks.forEach((risk, index) => {
            const score = risk.likelihood * risk.impact;
            const category = getRiskCategory(score);
            rows.push([
              index + 1,
              risk.name || "",
              risk.owner || "",
              risk.likelihood,
              risk.impact,
              score,
              category,
              (risk.notes || "").replace(/\r?\n/g, " "),
            ]);
          });

          const csvContent = rows
            .map((r) =>
              r
                .map((field) => {
                  const f = String(field);
                  if (/[",\n]/.test(f)) {
                    return '"' + f.replace(/"/g, '""') + '"';
                  }
                  return f;
                })
                .join(",")
            )
            .join("\n");

          const blob = new Blob([csvContent], {
            type: "text/csv;charset=utf-8;",
          });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = "risk-assessment-matrix.csv";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        }

        // Event bindings
        document.querySelectorAll(".matrix-size-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const size = parseInt(btn.dataset.size, 10);
            if (!size || size === matrixSize) return;
            matrixSize = size;
            document.querySelectorAll(".matrix-size-btn").forEach((b) => {
              b.classList.remove(
                "bg-blue-600",
                "text-white",
                "border-blue-600"
              );
              b.classList.add("border-gray-300", "text-gray-700", "bg-white");
            });
            btn.classList.remove(
              "border-gray-300",
              "text-gray-700",
              "bg-white"
            );
            btn.classList.add("bg-blue-600", "text-white", "border-blue-600");
            buildSelectOptions();
            buildMatrix();
          });
        });

        [thresholdLowInput, thresholdMediumInput, thresholdHighInput].forEach(
          (input) => {
            input.addEventListener("change", () => {
              buildMatrix();
              renderRisks();
            });
          }
        );

        document
          .getElementById("add-risk-btn")
          .addEventListener("click", addRiskFromForm);
        document.getElementById("risk-form").addEventListener("submit", (e) => {
          e.preventDefault();
          addRiskFromForm();
        });

        document
          .getElementById("clear-risks-btn")
          .addEventListener("click", () => {
            if (risks.length === 0) return;
            if (confirm("Clear all risks from the register?")) {
              risks = [];
              renderRisks();
            }
          });

        document
          .getElementById("export-csv-btn")
          .addEventListener("click", exportCSV);

        // Initial render
        buildSelectOptions();
        buildMatrix();
        renderRisks();
      })();
    </script>

