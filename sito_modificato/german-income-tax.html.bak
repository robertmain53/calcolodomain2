    <script>
      // --- Core German income tax model (simplified 2025) ---

      function germanIncomeTaxSingle2025(zvE) {
        // zvE: taxable income per person (after allowances), in EUR
        // Approximate 2025 schedule (values rounded for educational use)
        if (zvE <= 11000) {
          return 0;
        } else if (zvE <= 18000) {
          // Zone 2: progressive from 0 to ~14%
          const y = (zvE - 11000) / 10000;
          return (972.87 * y + 1400) * y; // simplified from official formula
        } else if (zvE <= 62000) {
          // Zone 3: progressive from ~14% to 42%
          const z = (zvE - 18000) / 10000;
          return (228.74 * z + 2397) * z + 972.79;
        } else if (zvE <= 280000) {
          // Zone 4: 42% marginal rate
          return 0.42 * zvE - 9136.63;
        } else {
          // Zone 5: 45% marginal rate
          return 0.45 * zvE - 17636.63;
        }
      }

      function marginalRateApprox(zvE) {
        // Numerical derivative around zvE
        const h = 10;
        const t1 = germanIncomeTaxSingle2025(Math.max(0, zvE - h));
        const t2 = germanIncomeTaxSingle2025(zvE + h);
        return (t2 - t1) / (2 * h) / 1; // per euro
      }

      function solidaritySurcharge(incomeTax) {
        // Simplified Soli model:
        // - no surcharge if income tax <= 16,956 (single) approx
        // - full 5.5% above 31,528
        // - linear phase-in in between
        const thresholdFree = 16956;
        const thresholdFull = 31528;
        if (incomeTax <= thresholdFree) return 0;
        if (incomeTax >= thresholdFull) return 0.055 * incomeTax;
        const factor =
          (incomeTax - thresholdFree) / (thresholdFull - thresholdFree);
        return factor * 0.055 * incomeTax;
      }

      function formatEuro(value) {
        if (!isFinite(value)) return "€0";
        return (
          "€" + value.toLocaleString("en-DE", { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function calculateGermanTax() {
        const incomeType = document.getElementById("incomeType").value;
        let income = parseFloat(document.getElementById("income").value) || 0;
        const maritalStatus = document.getElementById("maritalStatus").value;
        const churchRate =
          parseFloat(document.getElementById("churchTaxRate").value) || 0;
        const otherDeductions =
          parseFloat(document.getElementById("otherDeductions").value) || 0;

        if (income < 0) income = 0;

        // Basic allowance (approx 2025)
        const basicAllowanceSingle = 11000;
        const factor = maritalStatus === "married" ? 2 : 1;
        const basicAllowance = basicAllowanceSingle * factor;

        let grossIncome,
          netIncome,
          totalTax,
          incomeTax,
          soli,
          churchTax,
          taxableIncome,
          marginal;

        if (incomeType === "gross") {
          grossIncome = income;
          const preliminaryTaxable = Math.max(
            0,
            grossIncome - basicAllowance - otherDeductions
          );
          // For splitting: divide by 2, compute tax, then *2
          if (maritalStatus === "married") {
            const perSpouse = preliminaryTaxable / 2;
            incomeTax = 2 * germanIncomeTaxSingle2025(perSpouse);
            taxableIncome = perSpouse;
            marginal = marginalRateApprox(perSpouse);
          } else {
            incomeTax = germanIncomeTaxSingle2025(preliminaryTaxable);
            taxableIncome = preliminaryTaxable;
            marginal = marginalRateApprox(preliminaryTaxable);
          }
          soli = solidaritySurcharge(incomeTax);
          churchTax = churchRate * incomeTax;
          totalTax = incomeTax + soli + churchTax;
          netIncome = grossIncome - totalTax;
        } else {
          // Reverse: target net income -> find gross via binary search
          netIncome = income;
          let low = 0,
            high = 500000,
            mid = 0;
          for (let i = 0; i < 40; i++) {
            mid = (low + high) / 2;
            const preliminaryTaxable = Math.max(
              0,
              mid - basicAllowance - otherDeductions
            );
            let it;
            if (maritalStatus === "married") {
              const perSpouse = preliminaryTaxable / 2;
              it = 2 * germanIncomeTaxSingle2025(perSpouse);
            } else {
              it = germanIncomeTaxSingle2025(preliminaryTaxable);
            }
            const s = solidaritySurcharge(it);
            const ct = churchRate * it;
            const tt = it + s + ct;
            const n = mid - tt;
            if (n > netIncome) {
              high = mid;
            } else {
              low = mid;
            }
          }
          grossIncome = mid;
          const preliminaryTaxable = Math.max(
            0,
            grossIncome - basicAllowance - otherDeductions
          );
          if (maritalStatus === "married") {
            const perSpouse = preliminaryTaxable / 2;
            incomeTax = 2 * germanIncomeTaxSingle2025(perSpouse);
            taxableIncome = perSpouse;
            marginal = marginalRateApprox(perSpouse);
          } else {
            incomeTax = germanIncomeTaxSingle2025(preliminaryTaxable);
            taxableIncome = preliminaryTaxable;
            marginal = marginalRateApprox(preliminaryTaxable);
          }
          soli = solidaritySurcharge(incomeTax);
          churchTax = churchRate * incomeTax;
          totalTax = incomeTax + soli + churchTax;
          netIncome = grossIncome - totalTax;
        }

        const avgRate = grossIncome > 0 ? totalTax / grossIncome : 0;

        document.getElementById("taxableIncomeDisplay").textContent =
          formatEuro(taxableIncome);
        document.getElementById("incomeTaxDisplay").textContent =
          formatEuro(incomeTax);
        document.getElementById("solidarityDisplay").textContent =
          formatEuro(soli);
        document.getElementById("churchTaxDisplay").textContent =
          formatEuro(churchTax);
        document.getElementById("totalTaxDisplay").textContent =
          formatEuro(totalTax);
        document.getElementById("netIncomeDisplay").textContent =
          formatEuro(netIncome);
        document.getElementById("avgRateDisplay").textContent =
          formatPercent(avgRate);
        document.getElementById("marginalRateDisplay").textContent =
          formatPercent(marginal);
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateGermanTax);
      document.getElementById("incomeType").addEventListener("change", () => {
        const label = document.querySelector('label[for="income"]');
        const type = document.getElementById("incomeType").value;
        if (type === "gross") {
          label.textContent = "Annual income (€)";
        } else {
          label.textContent = "Target net annual income (€)";
        }
      });

      // Auto-calc on load
      window.addEventListener("DOMContentLoaded", calculateGermanTax);
    </script>

