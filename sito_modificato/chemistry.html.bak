    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".chem-tab");
      const panels = document.querySelectorAll(".chem-panel");

      function activateTab(id) {
        panels.forEach((p) => p.classList.toggle("hidden", p.id !== id));
        tabButtons.forEach((btn) => {
          if (btn.dataset.tab === id) {
            btn.classList.add("tab-active", "border-blue-600", "text-blue-700");
          } else {
            btn.classList.remove(
              "tab-active",
              "border-blue-600",
              "text-blue-700"
            );
          }
        });
      }

      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => activateTab(btn.dataset.tab));
      });
      // default tab
      activateTab("tab-moles");

      // Utility helpers
      function parseVal(id) {
        const el = document.getElementById(id);
        if (!el) return NaN;
        const v = parseFloat(el.value);
        return isNaN(v) ? NaN : v;
      }
      function setVal(id, val, digits = 4) {
        const el = document.getElementById(id);
        if (!el) return;
        if (val === null || isNaN(val)) {
          el.value = "";
        } else {
          const factor = Math.pow(10, digits);
          el.value = Math.round(val * factor) / factor;
        }
      }
      function showMessage(id, text) {
        const el = document.getElementById(id);
        if (el) el.textContent = text;
      }

      // Clear current panel
      document
        .querySelectorAll('[data-action="clear-panel"]')
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const panel = btn.closest(".chem-panel");
            if (!panel) return;
            panel.querySelectorAll("input").forEach((inp) => (inp.value = ""));
            panel
              .querySelectorAll(
                "#" +
                  panel.id +
                  ' [id$="-result"], #' +
                  panel.id +
                  ' [id$="-steps"]'
              )
              .forEach((el) => {
                el.textContent = "";
              });
          });
        });

      // Moles & mass solver
      document
        .querySelectorAll('[data-action="solve-moles"]')
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.dataset.target;
            const mRaw = parseVal("moles-mass");
            const M = parseVal("moles-molar-mass");
            const n = parseVal("moles-n");
            const massUnit = document.getElementById("moles-mass-unit").value;

            let m_g = mRaw;
            if (!isNaN(mRaw)) {
              if (massUnit === "kg") m_g = mRaw * 1000;
              else if (massUnit === "mg") m_g = mRaw / 1000;
            }

            let resultText = "";
            let steps = "";

            if (target === "n") {
              if (isNaN(m_g) || isNaN(M) || M === 0) {
                resultText = "Please enter both mass and molar mass.";
              } else {
                const nCalc = m_g / M;
                setVal("moles-n", nCalc, 5);
                resultText = `Amount of substance n ≈ ${nCalc.toPrecision(
                  4
                )} mol.`;
                steps = `Formula: n = m / M
m = ${m_g.toFixed(4)} g, M = ${M} g/mol
n = ${m_g.toFixed(4)} / ${M} = ${nCalc.toPrecision(6)} mol`;
              }
            } else if (target === "m") {
              if (isNaN(n) || isNaN(M)) {
                resultText = "Please enter moles and molar mass.";
              } else {
                let mCalc_g = n * M;
                let display = mCalc_g;
                if (massUnit === "kg") display = mCalc_g / 1000;
                else if (massUnit === "mg") display = mCalc_g * 1000;
                setVal("moles-mass", display, 5);
                resultText = `Required mass m ≈ ${display.toPrecision(
                  4
                )} ${massUnit}.`;
                steps = `Formula: m = n × M
n = ${n} mol, M = ${M} g/mol
m = ${n} × ${M} = ${mCalc_g.toPrecision(6)} g`;
              }
            } else if (target === "M") {
              if (isNaN(m_g) || isNaN(n) || n === 0) {
                resultText = "Please enter mass and moles.";
              } else {
                const MCalc = m_g / n;
                setVal("moles-molar-mass", MCalc, 5);
                resultText = `Molar mass M ≈ ${MCalc.toPrecision(4)} g/mol.`;
                steps = `Formula: M = m / n
m = ${m_g.toFixed(4)} g, n = ${n} mol
M = ${m_g.toFixed(4)} / ${n} = ${MCalc.toPrecision(6)} g/mol`;
              }
            }

            showMessage("moles-result", resultText);
            showMessage("moles-steps", steps);
          });
        });

      // Molarity solver
      document
        .querySelectorAll('[data-action="solve-molarity"]')
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.dataset.target;
            const M = parseVal("mol-M");
            const n = parseVal("mol-n");
            const Vraw = parseVal("mol-V");
            const Vunit = document.getElementById("mol-V-unit").value;
            let V_L = Vraw;
            if (!isNaN(Vraw)) {
              if (Vunit === "mL") V_L = Vraw / 1000;
            }

            let resultText = "";
            let steps = "";

            if (target === "M") {
              if (isNaN(n) || isNaN(V_L) || V_L === 0) {
                resultText = "Please enter moles and volume.";
              } else {
                const MCalc = n / V_L;
                setVal("mol-M", MCalc, 5);
                resultText = `Molarity M ≈ ${MCalc.toPrecision(4)} mol/L.`;
                steps = `Formula: M = n / V
n = ${n} mol, V = ${V_L.toPrecision(4)} L
M = ${n} / ${V_L.toPrecision(4)} = ${MCalc.toPrecision(6)} mol/L`;
              }
            } else if (target === "n") {
              if (isNaN(M) || isNaN(V_L)) {
                resultText = "Please enter molarity and volume.";
              } else {
                const nCalc = M * V_L;
                setVal("mol-n", nCalc, 5);
                resultText = `Moles of solute n ≈ ${nCalc.toPrecision(4)} mol.`;
                steps = `Formula: n = M × V
M = ${M} mol/L, V = ${V_L.toPrecision(4)} L
n = ${M} × ${V_L.toPrecision(4)} = ${nCalc.toPrecision(6)} mol`;
              }
            } else if (target === "V") {
              if (isNaN(M) || isNaN(n) || M === 0) {
                resultText = "Please enter molarity and moles.";
              } else {
                const VCalc_L = n / M;
                let display = VCalc_L;
                if (Vunit === "mL") display = VCalc_L * 1000;
                setVal("mol-V", display, 5);
                resultText = `Required volume V ≈ ${display.toPrecision(
                  4
                )} ${Vunit}.`;
                steps = `Formula: V = n / M
n = ${n} mol, M = ${M} mol/L
V = ${n} / ${M} = ${VCalc_L.toPrecision(6)} L`;
              }
            }

            showMessage("molarity-result", resultText);
            showMessage("molarity-steps", steps);
          });
        });

      // Dilution solver
      document
        .querySelectorAll('[data-action="solve-dilution"]')
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.dataset.target;
            const C1 = parseVal("dil-C1");
            const C2 = parseVal("dil-C2");
            const V1raw = parseVal("dil-V1");
            const V2raw = parseVal("dil-V2");
            const V1unit = document.getElementById("dil-V1-unit").value;
            const V2unit = document.getElementById("dil-V2-unit").value;

            // Convert both to liters for calculation
            let V1_L = V1raw;
            let V2_L = V2raw;
            if (!isNaN(V1raw) && V1unit === "mL") V1_L = V1raw / 1000;
            if (!isNaN(V2raw) && V2unit === "mL") V2_L = V2raw / 1000;

            let resultText = "";
            let steps = "";

            if (target === "C1") {
              if (isNaN(C2) || isNaN(V2_L) || isNaN(V1_L) || V1_L === 0) {
                resultText = "Please enter C₂, V₁, and V₂.";
              } else {
                const C1Calc = (C2 * V2_L) / V1_L;
                setVal("dil-C1", C1Calc, 5);
                resultText = `Initial concentration C₁ ≈ ${C1Calc.toPrecision(
                  4
                )} mol/L.`;
                steps = `Equation: C₁V₁ = C₂V₂
C₁ = C₂V₂ / V₁
C₁ = ${C2} × ${V2_L.toPrecision(4)} / ${V1_L.toPrecision(
                  4
                )} = ${C1Calc.toPrecision(6)} mol/L`;
              }
            } else if (target === "V1") {
              if (isNaN(C1) || isNaN(C2) || isNaN(V2_L) || C1 === 0) {
                resultText = "Please enter C₁, C₂, and V₂.";
              } else {
                const V1Calc_L = (C2 * V2_L) / C1;
                let display = V1Calc_L;
                if (V1unit === "mL") display = V1Calc_L * 1000;
                setVal("dil-V1", display, 5);
                resultText = `Volume of stock V₁ ≈ ${display.toPrecision(
                  4
                )} ${V1unit}.`;
                steps = `Equation: C₁V₁ = C₂V₂
V₁ = C₂V₂ / C₁
V₁ = ${C2} × ${V2_L.toPrecision(4)} / ${C1} = ${V1Calc_L.toPrecision(6)} L`;
              }
            } else if (target === "C2") {
              if (isNaN(C1) || isNaN(V1_L) || isNaN(V2_L) || V2_L === 0) {
                resultText = "Please enter C₁, V₁, and V₂.";
              } else {
                const C2Calc = (C1 * V1_L) / V2_L;
                setVal("dil-C2", C2Calc, 5);
                resultText = `Final concentration C₂ ≈ ${C2Calc.toPrecision(
                  4
                )} mol/L.`;
                steps = `Equation: C₁V₁ = C₂V₂
C₂ = C₁V₁ / V₂
C₂ = ${C1} × ${V1_L.toPrecision(4)} / ${V2_L.toPrecision(
                  4
                )} = ${C2Calc.toPrecision(6)} mol/L`;
              }
            } else if (target === "V2") {
              if (isNaN(C1) || isNaN(C2) || isNaN(V1_L) || C2 === 0) {
                resultText = "Please enter C₁, C₂, and V₁.";
              } else {
                const V2Calc_L = (C1 * V1_L) / C2;
                let display = V2Calc_L;
                if (V2unit === "mL") display = V2Calc_L * 1000;
                setVal("dil-V2", display, 5);
                resultText = `Final volume V₂ ≈ ${display.toPrecision(
                  4
                )} ${V2unit}.`;
                steps = `Equation: C₁V₁ = C₂V₂
V₂ = C₁V₁ / C₂
V₂ = ${C1} × ${V1_L.toPrecision(4)} / ${C2} = ${V2Calc_L.toPrecision(6)} L`;
              }
            }

            showMessage("dilution-result", resultText);
            showMessage("dilution-steps", steps);
          });
        });

      // Ideal gas solver
      document.querySelectorAll('[data-action="solve-gas"]').forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.dataset.target;
          const Praw = parseVal("gas-P");
          const Vraw = parseVal("gas-V");
          const n = parseVal("gas-n");
          const Traw = parseVal("gas-T");
          const Punit = document.getElementById("gas-P-unit").value;
          const Vunit = document.getElementById("gas-V-unit").value;
          const Tunit = document.getElementById("gas-T-unit").value;

          let P_atm = Praw;
          if (!isNaN(Praw) && Punit === "kPa") P_atm = Praw / 101.325;

          let V_L = Vraw;
          if (!isNaN(Vraw) && Vunit === "mL") V_L = Vraw / 1000;

          let T_K = Traw;
          if (!isNaN(Traw) && Tunit === "C") T_K = Traw + 273.15;

          const R = 0.082057; // L·atm·mol⁻1·K⁻1
          let resultText = "";
          let steps = "";

          if (target === "P") {
            if (isNaN(V_L) || isNaN(n) || isNaN(T_K) || V_L === 0) {
              resultText = "Please enter V, n, and T.";
            } else {
              const Pcalc_atm = (n * R * T_K) / V_L;
              let display = Pcalc_atm;
              if (Punit === "kPa") display = Pcalc_atm * 101.325;
              setVal("gas-P", display, 5);
              resultText = `Pressure P ≈ ${display.toPrecision(4)} ${Punit}.`;
              steps = `Ideal gas law: PV = nRT
P = nRT / V
P = ${n} × ${R} × ${T_K.toPrecision(4)} / ${V_L.toPrecision(
                4
              )} = ${Pcalc_atm.toPrecision(6)} atm`;
            }
          } else if (target === "V") {
            if (isNaN(P_atm) || isNaN(n) || isNaN(T_K) || P_atm === 0) {
              resultText = "Please enter P, n, and T.";
            } else {
              const Vcalc_L = (n * R * T_K) / P_atm;
              let display = Vcalc_L;
              if (Vunit === "mL") display = Vcalc_L * 1000;
              setVal("gas-V", display, 5);
              resultText = `Volume V ≈ ${display.toPrecision(4)} ${Vunit}.`;
              steps = `Ideal gas law: PV = nRT
V = nRT / P
V = ${n} × ${R} × ${T_K.toPrecision(4)} / ${P_atm.toPrecision(
                4
              )} = ${Vcalc_L.toPrecision(6)} L`;
            }
          } else if (target === "n") {
            if (isNaN(P_atm) || isNaN(V_L) || isNaN(T_K) || T_K === 0) {
              resultText = "Please enter P, V, and T.";
            } else {
              const nCalc = (P_atm * V_L) / (R * T_K);
              setVal("gas-n", nCalc, 5);
              resultText = `Amount of gas n ≈ ${nCalc.toPrecision(4)} mol.`;
              steps = `Ideal gas law: PV = nRT
n = PV / RT
n = ${P_atm.toPrecision(4)} × ${V_L.toPrecision(4)} / (${R} × ${T_K.toPrecision(
                4
              )}) = ${nCalc.toPrecision(6)} mol`;
            }
          } else if (target === "T") {
            if (isNaN(P_atm) || isNaN(V_L) || isNaN(n) || n === 0) {
              resultText = "Please enter P, V, and n.";
            } else {
              const Tcalc_K = (P_atm * V_L) / (n * R);
              let display = Tcalc_K;
              if (Tunit === "C") display = Tcalc_K - 273.15;
              setVal("gas-T", display, 5);
              resultText = `Temperature T ≈ ${display.toPrecision(
                4
              )} °${Tunit}.`;
              steps = `Ideal gas law: PV = nRT
T = PV / (nR)
T = ${P_atm.toPrecision(4)} × ${V_L.toPrecision(
                4
              )} / (${n} × ${R}) = ${Tcalc_K.toPrecision(6)} K`;
            }
          }

          showMessage("gas-result", resultText);
          showMessage("gas-steps", steps);
        });
      });

      // pH solver
      document.querySelectorAll('[data-action="solve-ph"]').forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.dataset.target;
          const H = parseVal("ph-H");
          const OH = parseVal("ph-OH");
          const pH = parseVal("ph-value");
          const Kw = 1e-14;
          let resultText = "";
          let steps = "";

          function log10(x) {
            return Math.log(x) / Math.LN10;
          }

          if (mode === "fromH") {
            if (isNaN(H) || H <= 0) {
              resultText = "Please enter a positive [H⁺].";
            } else {
              const pHcalc = -log10(H);
              const pOHcalc = 14 - pHcalc;
              const OHcalc = Kw / H;
              setVal("ph-value", pHcalc, 4);
              setVal("ph-OH", OHcalc, 6);
              resultText = `pH ≈ ${pHcalc.toFixed(4)}, pOH ≈ ${pOHcalc.toFixed(
                4
              )}, [OH⁻] ≈ ${OHcalc.toExponential(3)} mol/L.`;
              steps = `pH = -log₁₀[H⁺] = -log₁₀(${H}) = ${pHcalc.toFixed(4)}
pOH = 14 - pH = ${pOHcalc.toFixed(4)}
[OH⁻] = Kᵥ / [H⁺] = 1.0×10⁻¹⁴ / ${H} = ${OHcalc.toExponential(3)} mol/L`;
            }
          } else if (mode === "fromOH") {
            if (isNaN(OH) || OH <= 0) {
              resultText = "Please enter a positive [OH⁻].";
            } else {
              const pOHcalc = -log10(OH);
              const pHcalc = 14 - pOHcalc;
              const Hcalc = Kw / OH;
              setVal("ph-value", pHcalc, 4);
              setVal("ph-H", Hcalc, 6);
              resultText = `pH ≈ ${pHcalc.toFixed(4)}, pOH ≈ ${pOHcalc.toFixed(
                4
              )}, [H⁺] ≈ ${Hcalc.toExponential(3)} mol/L.`;
              steps = `pOH = -log₁₀[OH⁻] = -log₁₀(${OH}) = ${pOHcalc.toFixed(4)}
pH = 14 - pOH = ${pHcalc.toFixed(4)}
[H⁺] = Kᵥ / [OH⁻] = 1.0×10⁻¹⁴ / ${OH} = ${Hcalc.toExponential(3)} mol/L`;
            }
          } else if (mode === "frompH") {
            if (isNaN(pH)) {
              resultText = "Please enter a pH value.";
            } else {
              const Hcalc = Math.pow(10, -pH);
              const pOHcalc = 14 - pH;
              const OHcalc = Math.pow(10, -pOHcalc);
              setVal("ph-H", Hcalc, 6);
              setVal("ph-OH", OHcalc, 6);
              resultText = `[H⁺] ≈ ${Hcalc.toExponential(
                3
              )} mol/L, [OH⁻] ≈ ${OHcalc.toExponential(
                3
              )} mol/L, pOH ≈ ${pOHcalc.toFixed(4)}.`;
              steps = `[H⁺] = 10⁻ᵖᴴ = 10⁻${pH} = ${Hcalc.toExponential(3)} mol/L
pOH = 14 - pH = ${pOHcalc.toFixed(4)}
[OH⁻] = 10⁻ᵖᴼᴴ = 10⁻${pOHcalc.toFixed(4)} = ${OHcalc.toExponential(3)} mol/L`;
            }
          }

          showMessage("ph-result", resultText);
          showMessage("ph-steps", steps);
        });
      });

      // Stoichiometry solver
      document
        .querySelectorAll('[data-action="solve-stoich"]')
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.dataset.target;
            const a = parseVal("st-a");
            const b = parseVal("st-b");
            const nA = parseVal("st-nA");
            const nB = parseVal("st-nB");
            let resultText = "";
            let steps = "";

            if (a <= 0 || b <= 0 || isNaN(a) || isNaN(b)) {
              resultText =
                "Please enter positive stoichiometric coefficients a and b.";
              showMessage("stoich-result", resultText);
              showMessage("stoich-steps", "");
              return;
            }

            if (target === "B") {
              if (isNaN(nA)) {
                resultText = "Please enter moles of A.";
              } else {
                const nBcalc = (nA * b) / a;
                setVal("st-nB", nBcalc, 5);
                resultText = `Moles of B produced ≈ ${nBcalc.toPrecision(
                  4
                )} mol.`;
                steps = `Mole ratio: n_B / n_A = b / a = ${b} / ${a}
n_B = n_A × (b / a) = ${nA} × (${b}/${a}) = ${nBcalc.toPrecision(6)} mol`;
              }
            } else if (target === "A") {
              if (isNaN(nB)) {
                resultText = "Please enter moles of B.";
              } else {
                const nAcalc = (nB * a) / b;
                setVal("st-nA", nAcalc, 5);
                resultText = `Required moles of A ≈ ${nAcalc.toPrecision(
                  4
                )} mol.`;
                steps = `Mole ratio: n_B / n_A = b / a
n_A = n_B × (a / b) = ${nB} × (${a}/${b}) = ${nAcalc.toPrecision(6)} mol`;
              }
            }

            showMessage("stoich-result", resultText);
            showMessage("stoich-steps", steps);
          });
        });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            if (!answer) return;
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              if (icon) icon.textContent = "−";
            }
          });
        });
    </script>
  
