    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0.00";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function formatNumber(value, decimals = 4) {
        if (!isFinite(value)) return "0";
        return value.toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function getPeriodsPerYear(freq) {
        switch (freq) {
          case "annual":
            return 1;
          case "semiannual":
            return 2;
          case "quarterly":
            return 4;
          case "monthly":
            return 12;
          case "weekly":
            return 52;
          default:
            return 1;
        }
      }

      function calculatePV({ pmt, r, g, n, type }) {
        if (n <= 0 || !isFinite(n)) return 0;

        const isGrowing = Math.abs(g) > 1e-9;
        let pvOrdinary;

        if (!isGrowing) {
          if (Math.abs(r) < 1e-9) {
            pvOrdinary = pmt * n;
          } else {
            pvOrdinary = (pmt * (1 - Math.pow(1 + r, -n))) / r;
          }
        } else {
          if (Math.abs(r - g) < 1e-9) {
            // When r ≈ g, use limit approximation: PV ≈ Pmt1 * n / (1 + r)
            pvOrdinary = (pmt * n) / (1 + r);
          } else {
            const ratio = (1 + g) / (1 + r);
            pvOrdinary = (pmt * (1 - Math.pow(ratio, n))) / (r - g);
          }
        }

        if (type === "due") {
          return pvOrdinary * (1 + r);
        }
        return pvOrdinary;
      }

      function updateCalculator() {
        const payment =
          parseFloat(document.getElementById("paymentAmount").value) || 0;
        const annualRate =
          (parseFloat(document.getElementById("annualRate").value) || 0) / 100;
        const growthRate =
          (parseFloat(document.getElementById("growthRate").value) || 0) / 100;
        const years = parseFloat(document.getElementById("years").value) || 0;
        const extraPeriods =
          parseFloat(document.getElementById("extraPeriods").value) || 0;
        const freq = document.getElementById("paymentFrequency").value;
        const type = document.querySelector(
          'input[name="annuityType"]:checked'
        ).value;

        const m = getPeriodsPerYear(freq);
        const r = annualRate / m;

        let n = years * m + extraPeriods;
        if (!isFinite(n) || n < 0) n = 0;

        const pv = calculatePV({ pmt: payment, r, g: growthRate, n, type });
        const pvOrdinary = calculatePV({
          pmt: payment,
          r,
          g: growthRate,
          n,
          type: "ordinary",
        });
        const pvDue = calculatePV({
          pmt: payment,
          r,
          g: growthRate,
          n,
          type: "due",
        });

        document.getElementById("pvResult").textContent = formatCurrency(pv);
        document.getElementById("ratePerPeriod").textContent = formatNumber(
          r,
          6
        );
        document.getElementById("totalPeriods").textContent = isFinite(n)
          ? n.toString()
          : "0";

        document.getElementById("pvOrdinaryPreview").textContent =
          formatCurrency(pvOrdinary);
        document.getElementById("pvDuePreview").textContent =
          formatCurrency(pvDue);
        document.getElementById("pvDifference").textContent = formatCurrency(
          pvDue - pvOrdinary
        );

        const isGrowing = Math.abs(growthRate) > 1e-9;
        const formulaTypeLabel = document.getElementById("formulaTypeLabel");
        const formulaDisplay = document.getElementById("formulaDisplay");
        const formulaSubstitution = document.getElementById(
          "formulaSubstitution"
        );

        if (!isGrowing) {
          if (type === "ordinary") {
            formulaTypeLabel.textContent = "Ordinary level annuity";
            formulaDisplay.innerHTML =
              "PV = Pmt × \\(\\dfrac{1 - (1 + r)^{-n}}{r}\\)";
          } else {
            formulaTypeLabel.textContent = "Annuity due (level payments)";
            formulaDisplay.innerHTML =
              "PV = Pmt × \\(\\dfrac{1 - (1 + r)^{-n}}{r}\\) × (1 + r)";
          }
          formulaSubstitution.textContent = `Pmt = ${formatCurrency(
            payment
          )}, r = ${formatNumber(r, 6)}, n = ${
            isFinite(n) ? n.toString() : "0"
          }`;
        } else {
          if (type === "ordinary") {
            formulaTypeLabel.textContent = "Ordinary growing annuity";
            formulaDisplay.innerHTML =
              "PV = Pmt₁ × \\(\\dfrac{1 - \\left(\\dfrac{1 + g}{1 + r}\\right)^n}{r - g}\\)";
          } else {
            formulaTypeLabel.textContent = "Growing annuity due";
            formulaDisplay.innerHTML =
              "PV = Pmt₁ × \\(\\dfrac{1 - \\left(\\dfrac{1 + g}{1 + r}\\right)^n}{r - g}\\) × (1 + r)";
          }
          formulaSubstitution.textContent = `Pmt₁ = ${formatCurrency(
            payment
          )}, r = ${formatNumber(r, 6)}, g = ${formatNumber(
            growthRate / m,
            6
          )} (per period approx), n = ${isFinite(n) ? n.toString() : "0"}`;
        }

        if (window.MathJax && window.MathJax.typesetPromise) {
          window.MathJax.typesetPromise([formulaDisplay, formulaSubstitution]);
        }
      }

      function buildPVIFATable() {
        const tbody = document.getElementById("pvifaTableBody");
        if (!tbody) return;
        tbody.innerHTML = "";
        const rates = [0.03, 0.05, 0.07, 0.1];
        const maxN = 10;

        for (let n = 1; n <= maxN; n++) {
          const tr = document.createElement("tr");
          tr.className = n % 2 === 0 ? "bg-white" : "bg-gray-50";

          const tdN = document.createElement("td");
          tdN.className = "px-2 py-1 border border-gray-200 text-left";
          tdN.textContent = n.toString();
          tr.appendChild(tdN);

          rates.forEach((r) => {
            const td = document.createElement("td");
            td.className = "px-2 py-1 border border-gray-200 text-right";
            const factor = (1 - Math.pow(1 + r, -n)) / r;
            td.textContent = factor.toFixed(4);
            tr.appendChild(td);
          });

          tbody.appendChild(tr);
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        buildPVIFATable();
        document
          .getElementById("calculateBtn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            updateCalculator();
          });
        document.getElementById("resetBtn").addEventListener("click", (e) => {
          e.preventDefault();
          document.getElementById("paymentAmount").value = "";
          document.getElementById("annualRate").value = "";
          document.getElementById("growthRate").value = "0";
          document.getElementById("years").value = "";
          document.getElementById("extraPeriods").value = "";
          document.getElementById("paymentFrequency").value = "monthly";
          document.querySelector(
            'input[name="annuityType"][value="ordinary"]'
          ).checked = true;
          updateCalculator();
        });

        [
          "paymentAmount",
          "annualRate",
          "growthRate",
          "years",
          "extraPeriods",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el)
            el.addEventListener("input", () => {
              // live preview but not too aggressive; optional
            });
        });
      });
    </script>

