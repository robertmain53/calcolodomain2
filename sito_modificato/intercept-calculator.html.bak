      }

      // Global variables for calculations
      let currentSlope, currentYIntercept;

      // Calculate from Slope-Intercept Form
      function calculateFromSlopeIntercept() {
        const m = parseFloat(document.getElementById('slope-m').value);
        const b = parseFloat(document.getElementById('slope-b').value);
        
        if (isNaN(m) || isNaN(b)) {
          alert('Please enter valid numbers for slope and y-intercept');
          return;
        }

        currentSlope = m;
        currentYIntercept = b;

        // Calculate intercepts
        const xIntercept = m !== 0 ? -b/m : null;
        const yIntercept = b;

        // Prepare steps
        const steps = [
          `Given equation: y = ${m}x + ${b}`,
          `<strong>Finding Y-Intercept:</strong>`,
          `The y-intercept is the constant term 'b' = ${b}`,
          `Y-intercept point: (0, ${yIntercept})`,
          `<strong>Finding X-Intercept:</strong>`,
          `Set y = 0: 0 = ${m}x + ${b}`,
          m !== 0 ? `Solve for x: ${m}x = ${-b}` : 'Cannot solve: slope is 0 (horizontal line)',
          m !== 0 ? `x = ${-b} / ${m} = ${xIntercept.toFixed(4)}` : '',
          m !== 0 ? `X-intercept point: (${xIntercept.toFixed(4)}, 0)` : 'No x-intercept (horizontal line)'
        ].filter(step => step !== '');

        displayResults(xIntercept, yIntercept, `y = ${m}x + ${b}`, steps);
        drawGraph(m, b);
      }

      // Calculate from Standard Form
      function calculateFromStandard() {
        const a = parseFloat(document.getElementById('standard-a').value);
        const b = parseFloat(document.getElementById('standard-b').value);
        const c = parseFloat(document.getElementById('standard-c').value);
        
        if (isNaN(a) || isNaN(b) || isNaN(c)) {
          alert('Please enter valid numbers for A, B, and C');
          return;
        }

        if (a === 0 && b === 0) {
          alert('Both A and B cannot be zero');
          return;
        }

        // Calculate intercepts
        const xIntercept = a !== 0 ? c/a : null;
        const yIntercept = b !== 0 ? c/b : null;

        // Convert to slope-intercept for graphing
        if (b !== 0) {
          currentSlope = -a/b;
          currentYIntercept = c/b;
        } else {
          currentSlope = null;
          currentYIntercept = null;
        }

        // Prepare steps
        const steps = [
          `Given equation: ${a}x + ${b}y = ${c}`,
          `<strong>Finding X-Intercept:</strong>`,
          a !== 0 ? `Set y = 0: ${a}x = ${c}` : 'Cannot find x-intercept (A = 0)',
          a !== 0 ? `x = ${c} / ${a} = ${xIntercept.toFixed(4)}` : '',
          a !== 0 ? `X-intercept point: (${xIntercept.toFixed(4)}, 0)` : 'No x-intercept (vertical line)',
          `<strong>Finding Y-Intercept:</strong>`,
          b !== 0 ? `Set x = 0: ${b}y = ${c}` : 'Cannot find y-intercept (B = 0)',
          b !== 0 ? `y = ${c} / ${b} = ${yIntercept.toFixed(4)}` : '',
          b !== 0 ? `Y-intercept point: (0, ${yIntercept.toFixed(4)})` : 'No y-intercept (horizontal line)'
        ].filter(step => step !== '');

        displayResults(xIntercept, yIntercept, `${a}x + ${b}y = ${c}`, steps);
        if (b !== 0) {
          drawGraph(currentSlope, currentYIntercept);
        } else {
          drawVerticalLine(xIntercept);
        }
      }

      // Calculate from Two Points
      function calculateFromTwoPoints() {
        const x1 = parseFloat(document.getElementById('point1-x').value);
        const y1 = parseFloat(document.getElementById('point1-y').value);
        const x2 = parseFloat(document.getElementById('point2-x').value);
        const y2 = parseFloat(document.getElementById('point2-y').value);
        
        if (isNaN(x1) || isNaN(y1) || isNaN(x2) || isNaN(y2)) {
          alert('Please enter valid numbers for both points');
          return;
        }

        if (x1 === x2 && y1 === y2) {
          alert('Points must be different');
          return;
        }

        if (x1 === x2) {
          alert('These points form a vertical line (undefined slope)');
          return;
        }

        // Calculate slope
        const m = (y2 - y1) / (x2 - x1);
        
        // Calculate y-intercept using point-slope form
        const b = y1 - m * x1;
        
        currentSlope = m;
        currentYIntercept = b;

        // Calculate intercepts
        const xIntercept = m !== 0 ? -b/m : null;
        const yIntercept = b;

        // Prepare steps
        const steps = [
          `Given points: (${x1}, ${y1}) and (${x2}, ${y2})`,
          `<strong>Step 1: Calculate Slope</strong>`,
          `m = (y‚ÇÇ - y‚ÇÅ) / (x‚ÇÇ - x‚ÇÅ)`,
          `m = (${y2} - ${y1}) / (${x2} - ${x1})`,
          `m = ${(y2-y1).toFixed(4)} / ${(x2-x1).toFixed(4)} = ${m.toFixed(4)}`,
          `<strong>Step 2: Find Equation</strong>`,
          `Using point-slope form: y - y‚ÇÅ = m(x - x‚ÇÅ)`,
          `y - ${y1} = ${m.toFixed(4)}(x - ${x1})`,
          `y = ${m.toFixed(4)}x + ${b.toFixed(4)}`,
          `<strong>Step 3: Find Intercepts</strong>`,
          `Y-intercept: (0, ${yIntercept.toFixed(4)})`,
          m !== 0 ? `X-intercept: Set y = 0, x = ${xIntercept.toFixed(4)}` : 'No x-intercept (horizontal line)',
          m !== 0 ? `X-intercept point: (${xIntercept.toFixed(4)}, 0)` : ''
        ].filter(step => step !== '');

        displayResults(xIntercept, yIntercept, `y = ${m.toFixed(4)}x + ${b.toFixed(4)}`, steps);
        drawGraph(m, b);
      }

      // Calculate from Point-Slope Form
      function calculateFromPointSlope() {
        const m = parseFloat(document.getElementById('ps-slope').value);
        const x1 = parseFloat(document.getElementById('ps-x1').value);
        const y1 = parseFloat(document.getElementById('ps-y1').value);
        
        if (isNaN(m) || isNaN(x1) || isNaN(y1)) {
          alert('Please enter valid numbers for slope and point');
          return;
        }

        // Convert to slope-intercept form: y = mx + b
        const b = y1 - m * x1;
        
        currentSlope = m;
        currentYIntercept = b;

        // Calculate intercepts
        const xIntercept = m !== 0 ? -b/m : null;
        const yIntercept = b;

        // Prepare steps
        const steps = [
          `Given: Slope m = ${m}, Point (${x1}, ${y1})`,
          `Point-slope form: y - ${y1} = ${m}(x - ${x1})`,
          `<strong>Step 1: Convert to Slope-Intercept Form</strong>`,
          `y - ${y1} = ${m}x - ${(m*x1).toFixed(4)}`,
          `y = ${m}x + ${b.toFixed(4)}`,
          `<strong>Step 2: Find Intercepts</strong>`,
          `Y-intercept: b = ${yIntercept.toFixed(4)}`,
          `Y-intercept point: (0, ${yIntercept.toFixed(4)})`,
          m !== 0 ? `X-intercept: Set y = 0, solve for x` : 'No x-intercept (horizontal line)',
          m !== 0 ? `0 = ${m}x + ${b.toFixed(4)}` : '',
          m !== 0 ? `x = ${xIntercept.toFixed(4)}` : '',
          m !== 0 ? `X-intercept point: (${xIntercept.toFixed(4)}, 0)` : ''
        ].filter(step => step !== '');

        displayResults(xIntercept, yIntercept, `y = ${m}x + ${b.toFixed(4)}`, steps);
        drawGraph(m, b);
      }

      // Display results
      function displayResults(xIntercept, yIntercept, equation, steps) {
        document.getElementById('results').classList.remove('hidden');
        
        // Display intercepts
        document.getElementById('x-intercept-result').textContent = 
          xIntercept !== null ? `(${xIntercept.toFixed(4)}, 0)` : 'No x-intercept';
        
        document.getElementById('y-intercept-result').textContent = 
          yIntercept !== null ? `(0, ${yIntercept.toFixed(4)})` : 'No y-intercept';
        
        // Display equation
        document.getElementById('equation-result').textContent = equation;
        
        // Display steps
        const stepsContainer = document.getElementById('calculation-steps');
        stepsContainer.innerHTML = steps.map((step, index) => 
          `<div class="step-item p-2 bg-gray-50 rounded">${step}</div>`
        ).join('');

        // Scroll to results
        document.getElementById('results').scrollIntoView({ behavior: 'smooth', block: 'nearest' });
      }

      // Draw graph
      function drawGraph(slope, yIntercept) {
        const canvas = document.getElementById('graph-canvas');
        const ctx = canvas.getContext('2d');
        const width = canvas.width;
        const height = canvas.height;
        
        // Clear canvas
        ctx.clearRect(0, 0, width, height);
        
        // Set up coordinate system
        const centerX = width / 2;
        const centerY = height / 2;
        const scale = 30; // pixels per unit
        
        // Draw grid
        ctx.strokeStyle = '#e5e7eb';
        ctx.lineWidth = 1;
        
        // Vertical grid lines
        for (let x = 0; x < width; x += scale) {
          ctx.beginPath();
          ctx.moveTo(x, 0);
          ctx.lineTo(x, height);
          ctx.stroke();
        }
        
        // Horizontal grid lines
        for (let y = 0; y < height; y += scale) {
          ctx.beginPath();
          ctx.moveTo(0, y);
          ctx.lineTo(width, y);
          ctx.stroke();
        }
        
        // Draw axes
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 2;
        
        // X-axis
        ctx.beginPath();
        ctx.moveTo(0, centerY);
        ctx.lineTo(width, centerY);
        ctx.stroke();
        
        // Y-axis
        ctx.beginPath();
        ctx.moveTo(centerX, 0);
        ctx.lineTo(centerX, height);
        ctx.stroke();
        
        // Draw line
        ctx.strokeStyle = '#3b82f6';
        ctx.lineWidth = 3;
        ctx.beginPath();
        
        // Calculate points
        const xMin = -centerX / scale;
        const xMax = centerX / scale;
        
        const y1 = slope * xMin + yIntercept;
        const y2 = slope * xMax + yIntercept;
        
        // Convert to canvas coordinates
        const canvasX1 = centerX + xMin * scale;
        const canvasY1 = centerY - y1 * scale;
        const canvasX2 = centerX + xMax * scale;
        const canvasY2 = centerY - y2 * scale;
        
        ctx.moveTo(canvasX1, canvasY1);
        ctx.lineTo(canvasX2, canvasY2);
        ctx.stroke();
        
        // Draw intercepts
        // X-intercept
        if (slope !== 0) {
          const xInt = -yIntercept / slope;
          const canvasXInt = centerX + xInt * scale;
          
          if (canvasXInt >= 0 && canvasXInt <= width) {
            ctx.fillStyle = '#3b82f6';
            ctx.beginPath();
            ctx.arc(canvasXInt, centerY, 6, 0, 2 * Math.PI);
            ctx.fill();
            
            ctx.fillStyle = '#000';
            ctx.font = '12px Inter';
            ctx.fillText(`(${xInt.toFixed(2)}, 0)`, canvasXInt + 10, centerY - 10);
          }
        }
        
        // Y-intercept
        const canvasYInt = centerY - yIntercept * scale;
        if (canvasYInt >= 0 && canvasYInt <= height) {
          ctx.fillStyle = '#10b981';
          ctx.beginPath();
          ctx.arc(centerX, canvasYInt, 6, 0, 2 * Math.PI);
          ctx.fill();
          
          ctx.fillStyle = '#000';
          ctx.font = '12px Inter';
          ctx.fillText(`(0, ${yIntercept.toFixed(2)})`, centerX + 10, canvasYInt - 10);
        }
        
        // Add axis labels
        ctx.fillStyle = '#000';
        ctx.font = '14px Inter';
        ctx.fillText('x', width - 20, centerY - 10);
        ctx.fillText('y', centerX + 10, 20);
      }

      // Draw vertical line (for special case)
      function drawVerticalLine(xIntercept) {
        const canvas = document.getElementById('graph-canvas');
        const ctx = canvas.getContext('2d');
        const width = canvas.width;
        const height = canvas.height;
        
        ctx.clearRect(0, 0, width, height);
        
        const centerX = width / 2;
        const centerY = height / 2;
        const scale = 30;
        
        // Draw grid and axes (same as above)
        ctx.strokeStyle = '#e5e7eb';
        ctx.lineWidth = 1;
        
        for (let x = 0; x < width; x += scale) {
          ctx.beginPath();
          ctx.moveTo(x, 0);
          ctx.lineTo(x, height);
          ctx.stroke();
        }
        
        for (let y = 0; y < height; y += scale) {
          ctx.beginPath();
          ctx.moveTo(0, y);
          ctx.lineTo(width, y);
          ctx.stroke();
        }
        
        ctx.strokeStyle = '#000';
        ctx.lineWidth = 2;
        ctx.beginPath();
        ctx.moveTo(0, centerY);
        ctx.lineTo(width, centerY);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(centerX, 0);
        ctx.lineTo(centerX, height);
        ctx.stroke();
        
        // Draw vertical line
        const lineX = centerX + xIntercept * scale;
        ctx.strokeStyle = '#3b82f6';
        ctx.lineWidth = 3;
        ctx.beginPath();
        ctx.moveTo(lineX, 0);
        ctx.lineTo(lineX, height);
        ctx.stroke();
        
        // Mark intercept
        ctx.fillStyle = '#3b82f6';
        ctx.beginPath();
        ctx.arc(lineX, centerY, 6, 0, 2 * Math.PI);
        ctx.fill();
        
        ctx.fillStyle = '#000';
        ctx.font = '12px Inter';
        ctx.fillText(`x = ${xIntercept.toFixed(2)}`, lineX + 10, centerY + 20);
      }
    </script>
    

