    <script>
      // Board foot calculator logic
      (function () {
        const unitImperialBtn = document.getElementById("unitImperialBtn");
        const unitMetricBtn = document.getElementById("unitMetricBtn");
        const thicknessInput = document.getElementById("thicknessInput");
        const widthInput = document.getElementById("widthInput");
        const lengthInput = document.getElementById("lengthInput");
        const quantityInput = document.getElementById("quantityInput");
        const pricePerBFInput = document.getElementById("pricePerBFInput");
        const wasteInput = document.getElementById("wasteInput");
        const calcBtn = document.getElementById("calcBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorEl = document.getElementById("calcError");

        const thicknessUnitLabel =
          document.getElementById("thicknessUnitLabel");
        const widthUnitLabel = document.getElementById("widthUnitLabel");
        const lengthUnitLabel = document.getElementById("lengthUnitLabel");
        const lengthUnitRadios =
          document.querySelectorAll(".length-unit-radio");

        const bfSingleEl = document.getElementById("bfSingle");
        const bfTotalEl = document.getElementById("bfTotal");
        const bfWithWasteEl = document.getElementById("bfWithWaste");
        const wasteDisplayEl = document.getElementById("wasteDisplay");
        const cubicInchesEl = document.getElementById("cubicInches");
        const cubicFeetEl = document.getElementById("cubicFeet");
        const cubicMetersEl = document.getElementById("cubicMeters");
        const totalCostEl = document.getElementById("totalCost");
        const costNoteEl = document.getElementById("costNote");

        const presetButtons = document.querySelectorAll(".preset-btn");

        let unitSystem = "imperial"; // 'imperial' or 'metric'

        function setUnitSystem(system) {
          unitSystem = system;
          if (system === "imperial") {
            unitImperialBtn.classList.add(
              "bg-white",
              "shadow-sm",
              "text-gray-800"
            );
            unitImperialBtn.classList.remove("text-gray-600");
            unitMetricBtn.classList.remove(
              "bg-white",
              "shadow-sm",
              "text-gray-800"
            );
            unitMetricBtn.classList.add("text-gray-600");

            thicknessUnitLabel.textContent = "in";
            widthUnitLabel.textContent = "in";
            lengthUnitLabel.textContent = getSelectedLengthUnit();

            lengthUnitRadios.forEach((r) => (r.disabled = false));
          } else {
            unitMetricBtn.classList.add(
              "bg-white",
              "shadow-sm",
              "text-gray-800"
            );
            unitMetricBtn.classList.remove("text-gray-600");
            unitImperialBtn.classList.remove(
              "bg-white",
              "shadow-sm",
              "text-gray-800"
            );
            unitImperialBtn.classList.add("text-gray-600");

            thicknessUnitLabel.textContent = "mm";
            widthUnitLabel.textContent = "mm";
            lengthUnitLabel.textContent = "m";

            // In metric mode, length is always meters
            lengthUnitRadios.forEach((r) => {
              r.disabled = true;
              r.checked = r.value === "ft";
            });
          }
        }

        function getSelectedLengthUnit() {
          let unit = "ft";
          lengthUnitRadios.forEach((r) => {
            if (r.checked) unit = r.value;
          });
          return unit;
        }

        function parsePositive(value) {
          const n = parseFloat(value);
          return isFinite(n) && n > 0 ? n : null;
        }

        function calculate() {
          errorEl.classList.add("hidden");

          const t = parsePositive(thicknessInput.value);
          const w = parsePositive(widthInput.value);
          const l = parsePositive(lengthInput.value);
          const qty = parsePositive(quantityInput.value) || 1;
          const wastePct = parseFloat(wasteInput.value);
          const pricePerBF = parseFloat(pricePerBFInput.value);

          if (!t || !w || !l || qty <= 0) {
            errorEl.classList.remove("hidden");
            return;
          }

          let bfPerBoard = 0;
          let cubicInPerBoard = 0;
          let cubicFtPerBoard = 0;
          let cubicMPerBoard = 0;

          if (unitSystem === "imperial") {
            const lengthUnit = getSelectedLengthUnit();
            let lengthInches;
            if (lengthUnit === "ft") {
              lengthInches = l * 12;
            } else {
              lengthInches = l;
            }

            cubicInPerBoard = t * w * lengthInches;
            cubicFtPerBoard = cubicInPerBoard / 1728;
            cubicMPerBoard = cubicFtPerBoard * 0.0283168466;
            bfPerBoard = cubicInPerBoard / 144;
          } else {
            // metric: t, w in mm, l in m
            const t_m = t / 1000;
            const w_m = w / 1000;
            const volumeM3 = t_m * w_m * l;
            cubicMPerBoard = volumeM3;
            cubicFtPerBoard = volumeM3 / 0.0283168466;
            cubicInPerBoard = cubicFtPerBoard * 1728;
            bfPerBoard = volumeM3 / 0.002359737; // 1 BF ≈ 0.002359737 m³
          }

          const totalBF = bfPerBoard * qty;
          const wasteFactor =
            isFinite(wastePct) && wastePct > 0 ? 1 + wastePct / 100 : 1;
          const totalBFWithWaste = totalBF * wasteFactor;

          const totalCubicIn = cubicInPerBoard * qty;
          const totalCubicFt = cubicFtPerBoard * qty;
          const totalCubicM = cubicMPerBoard * qty;

          let totalCost = 0;
          if (!isNaN(pricePerBF) && pricePerBF > 0) {
            totalCost = totalBFWithWaste * pricePerBF;
            costNoteEl.textContent = "(based on price per BF and waste)";
          } else {
            costNoteEl.textContent = "(enter price/BF)";
          }

          bfSingleEl.textContent = bfPerBoard.toFixed(2);
          bfTotalEl.textContent = totalBF.toFixed(2);
          bfWithWasteEl.textContent = totalBFWithWaste.toFixed(2);
          wasteDisplayEl.textContent =
            isFinite(wastePct) && wastePct >= 0 ? wastePct.toFixed(0) : "0";

          cubicInchesEl.textContent = totalCubicIn.toFixed(2);
          cubicFeetEl.textContent = totalCubicFt.toFixed(3);
          cubicMetersEl.textContent = totalCubicM.toFixed(4);
          totalCostEl.textContent = "$" + totalCost.toFixed(2);
        }

        function reset() {
          thicknessInput.value = 1;
          widthInput.value = 6;
          lengthInput.value = 8;
          quantityInput.value = 1;
          pricePerBFInput.value = "";
          wasteInput.value = 10;
          setUnitSystem("imperial");
          calculate();
        }

        unitImperialBtn.addEventListener("click", () => {
          setUnitSystem("imperial");
          calculate();
        });

        unitMetricBtn.addEventListener("click", () => {
          setUnitSystem("metric");
          calculate();
        });

        lengthUnitRadios.forEach((r) => {
          r.addEventListener("change", () => {
            if (unitSystem === "imperial") {
              lengthUnitLabel.textContent = getSelectedLengthUnit();
            }
            calculate();
          });
        });

        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", reset);

        [
          thicknessInput,
          widthInput,
          lengthInput,
          quantityInput,
          pricePerBFInput,
          wasteInput,
        ].forEach((el) => {
          el.addEventListener("input", () => {
            // live update but avoid flashing errors on empty
            if (el.value === "") return;
            calculate();
          });
        });

        presetButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            setUnitSystem("imperial");
            thicknessInput.value = btn.dataset.thickness;
            widthInput.value = btn.dataset.width;
            lengthInput.value = btn.dataset.length;
            const lu = btn.dataset.lengthunit || "ft";
            lengthUnitRadios.forEach((r) => (r.checked = r.value === lu));
            lengthUnitLabel.textContent = lu;
            quantityInput.value = 1;
            calculate();
          });
        });

        // Initial calculation
        setUnitSystem("imperial");
        calculate();
      })();
    </script>

