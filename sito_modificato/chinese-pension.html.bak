    <script>
      // Utility: clamp and parse
      function val(id, min, max, fallback) {
        const el = document.getElementById(id);
        let v = parseFloat(el.value);
        if (isNaN(v)) v = fallback;
        if (min !== undefined && v < min) v = min;
        if (max !== undefined && v > max) v = max;
        el.value = v;
        return v;
      }

      function formatCurrency(num) {
        if (!isFinite(num)) return "–";
        return num.toLocaleString("en-CN", {
          style: "currency",
          currency: "CNY",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(num) {
        if (!isFinite(num)) return "–";
        return (num * 100).toFixed(1) + "%";
      }

      function calculateChinesePension() {
        const currentAge = val("currentAge", 16, 70, 35);
        const retirementAge = val("retirementAge", 40, 70, 60);
        const yearsContributed = val("yearsContributed", 1, 50, 30);
        const currentWage = val("currentWage", 1000, 1e7, 10000);
        const avgWageNow = val("avgWage", 1000, 1e7, 9000);
        const wageGrowth = val("wageGrowth", -5, 20, 4) / 100;
        const socialWageGrowth = val("socialWageGrowth", -5, 20, 3.5) / 100;
        const contributionRate = val("contributionRate", 0, 50, 20) / 100;
        const individualShare = val("individualAccountShare", 0, 50, 8) / 100;
        const accountReturn = val("accountReturn", -5, 20, 3) / 100;
        const annuityDivisor = val("annuityDivisor", 60, 300, 139);
        const basicCoeff = val("basicPensionCoeff", 0, 0.05, 0.01);

        const yearsToRetirement = Math.max(0, retirementAge - currentAge);

        // Project final wage and social average wage
        const finalWage =
          currentWage * Math.pow(1 + wageGrowth, yearsToRetirement);
        const finalAvgWage =
          avgWageNow * Math.pow(1 + socialWageGrowth, yearsToRetirement);

        // Basic pension
        const basicPension = basicCoeff * yearsContributed * finalAvgWage;

        // Individual account balance approximation
        // Assume contributions each year grow with wageGrowth and earn accountReturn
        const n = yearsToRetirement;
        let accountBalance = 0;
        if (n > 0) {
          const g = 1 + wageGrowth;
          const r = 1 + accountReturn;
          const ratio = g * r;
          if (Math.abs(ratio - 1) < 1e-9) {
            // Approximately constant
            accountBalance = currentWage * individualShare * n;
          } else {
            accountBalance =
              (currentWage * individualShare * (Math.pow(ratio, n) - 1)) /
              (ratio - 1);
          }
        } else {
          // Already at retirement; approximate with one year of contributions
          accountBalance = currentWage * individualShare;
        }

        const individualPension = accountBalance / annuityDivisor;
        const totalPension = basicPension + individualPension;
        const replacementRate = totalPension / finalWage;

        document.getElementById("resultBasic").textContent =
          formatCurrency(basicPension);
        document.getElementById("resultIndividual").textContent =
          formatCurrency(individualPension);
        document.getElementById("resultTotal").textContent =
          formatCurrency(totalPension);
        document.getElementById("resultReplacement").textContent = isFinite(
          replacementRate
        )
          ? formatPercent(replacementRate)
          : "–";
        document.getElementById("resultAccountBalance").textContent =
          formatCurrency(accountBalance);
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateChinesePension);

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("currentAge").value = 35;
        document.getElementById("retirementAge").value = 60;
        document.getElementById("yearsContributed").value = 30;
        document.getElementById("currentWage").value = 10000;
        document.getElementById("avgWage").value = 9000;
        document.getElementById("wageGrowth").value = 4;
        document.getElementById("socialWageGrowth").value = 3.5;
        document.getElementById("contributionRate").value = 20;
        document.getElementById("individualAccountShare").value = 8;
        document.getElementById("accountReturn").value = 3;
        document.getElementById("annuityDivisor").value = 139;
        document.getElementById("basicPensionCoeff").value = 0.01;
        calculateChinesePension();
      });

      // Auto-calc on load
      window.addEventListener("DOMContentLoaded", calculateChinesePension);

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
