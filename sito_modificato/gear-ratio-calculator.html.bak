        function toInches(diameter, unit) {
          if (!isFinite(diameter) || diameter <= 0) return NaN;
          return unit === "mm" ? diameter / 25.4 : diameter;
        }

        function mphToKph(mph) {
          return mph * 1.609344;
        }
        function kphToMph(kph) {
          return kph / 1.609344;
        }

        function calcOverallRatio(trans, finalDrive) {
          return trans * finalDrive;
        }

        function calcSpeedFromRpm(engineRpm, overallRatio, tireDiamIn, unit) {
          if (overallRatio <= 0 || tireDiamIn <= 0) return NaN;
          const wheelRpm = engineRpm / overallRatio;
          const circumferenceIn = Math.PI * tireDiamIn;
          const mph = (wheelRpm * circumferenceIn) / 1056;
          return unit === "mph" ? mph : mphToKph(mph);
        }

        function calcRpmFromSpeed(speed, unit, overallRatio, tireDiamIn) {
          if (overallRatio <= 0 || tireDiamIn <= 0) return NaN;
          const mph = unit === "mph" ? speed : kphToMph(speed);
          const circumferenceIn = Math.PI * tireDiamIn;
          const wheelRpm = (mph * 1056) / circumferenceIn;
          return wheelRpm * overallRatio;
        }

        function formatNumber(x, decimals = 2) {
          if (!isFinite(x)) return "—";
          return x.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
            minimumFractionDigits: decimals,
          });
        }

