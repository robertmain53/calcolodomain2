              );
              const tireA = parseFloat(document.getElementById("tire-a").value);
              const transB = parseFloat(
                document.getElementById("trans-b").value
              );
              const finalB = parseFloat(
                document.getElementById("final-b").value
              );
              const tireB = parseFloat(document.getElementById("tire-b").value);
              const speed = parseFloat(
                document.getElementById("compare-speed").value
              );
              const unit = document.getElementById("compare-speed-unit").value;

              if (
                ![transA, finalA, tireA, transB, finalB, tireB, speed].every(
                  (v) => isFinite(v) && v > 0
                )
              ) {
                alert("Please enter valid values for both setups and speed.");
                return;
              }

              const overallA = transA * finalA;
              const overallB = transB * finalB;
              const rpmA = calcRpmFromSpeed(speed, unit, overallA, tireA);
              const rpmB = calcRpmFromSpeed(speed, unit, overallB, tireB);

              showResults(
                [
                  {
                    label: "Setup A RPM",
                    value: `${formatNumber(rpmA, 0)} RPM`,
                    sub: `Overall ${formatNumber(
                      overallA,
                      2
                    )}:1, tire ${formatNumber(tireA, 1)} in`,
                  },
                  {
                    label: "Setup B RPM",
                    value: `${formatNumber(rpmB, 0)} RPM`,
                    sub: `Overall ${formatNumber(
                      overallB,
                      2
                    )}:1, tire ${formatNumber(tireB, 1)} in`,
                  },
                ],
                `
        <p>At <strong>${formatNumber(speed, 1)} ${unit}</strong>:</p>
        <ul class="list-disc ml-5">
          <li><strong>Setup A</strong> (${formatNumber(
            transA,
            2
          )} × ${formatNumber(finalA, 2)}, ${formatNumber(
                  tireA,
                  1
                )} in tire) runs at about <strong>${formatNumber(
                  rpmA,
                  0
                )} RPM</strong>.</li>
          <li><strong>Setup B</strong> (${formatNumber(
            transB,
            2
          )} × ${formatNumber(finalB, 2)}, ${formatNumber(
                  tireB,
                  1
                )} in tire) runs at about <strong>${formatNumber(
                  rpmB,
                  0
                )} RPM</strong>.</li>
        </ul>
        <p>The difference is approximately <strong>${formatNumber(
          Math.abs(rpmA - rpmB),
          0
        )} RPM</strong>.</p>
      `
              );
            }
          });

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("transmission-ratio").value = 0.75;
          document.getElementById("final-drive-ratio").value = 4.1;
          document.getElementById("tire-diameter").value = 28;
          document.getElementById("tire-diameter-unit").value = "in";
          document.getElementById("drivetrain-loss").value = 15;
          document.getElementById("engine-rpm").value = 2500;
          document.getElementById("speed-unit").value = "mph";
          document.getElementById("vehicle-speed").value = 65;
          document.getElementById("vehicle-speed-unit").value = "mph";
          document.getElementById("driver-teeth").value = 15;
          document.getElementById("driven-teeth").value = 45;
          document.getElementById("trans-a").value = 0.75;
          document.getElementById("final-a").value = 3.73;
          document.getElementById("tire-a").value = 28;
          document.getElementById("trans-b").value = 0.75;
          document.getElementById("final-b").value = 4.1;
          document.getElementById("tire-b").value = 33;
          document.getElementById("compare-speed").value = 65;
          document.getElementById("compare-speed-unit").value = "mph";
          document.getElementById("results-section").classList.add("hidden");
        });

        // Tire helper modal
        const tireModal = document.getElementById("tire-helper-modal");
        document
          .getElementById("open-tire-helper")
          .addEventListener("click", () => {
            tireModal.classList.remove("hidden");
          });
        document
          .getElementById("close-tire-helper")
          .addEventListener("click", () => {
            tireModal.classList.add("hidden");
          });
        tireModal.addEventListener("click", (e) => {
          if (e.target === tireModal) tireModal.classList.add("hidden");
        });

        document
          .getElementById("tire-helper-calc")
          .addEventListener("click", () => {
            const w = parseFloat(document.getElementById("tire-width").value);
            const a = parseFloat(document.getElementById("tire-aspect").value);
            const r = parseFloat(document.getElementById("tire-rim").value);
            const out = document.getElementById("tire-helper-output");
            if (![w, a, r].every((v) => isFinite(v) && v > 0)) {
              out.textContent = "Please enter valid tire size values.";
              out.className = "text-sm text-red-600 mt-2";
              return;
            }
            const sidewallMm = w * (a / 100);
            const sidewallIn = sidewallMm / 25.4;
            const diameterIn = r + 2 * sidewallIn;
            out.innerHTML = `
      Estimated overall diameter: <strong>${formatNumber(
        diameterIn,
        2
      )} in</strong><br>
      Click to use this value for the main calculator.
    `;
            out.className =
              "text-sm text-gray-700 mt-2 cursor-pointer underline";
            out.onclick = () => {
              document.getElementById("tire-diameter").value =
                diameterIn.toFixed(2);
              document.getElementById("tire-diameter-unit").value = "in";
              tireModal.classList.add("hidden");
            };
          });
      })();
    </script>
  
