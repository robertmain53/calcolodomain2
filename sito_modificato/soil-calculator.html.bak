    <script>
      // Utility conversions
      function toFeet(value, unit) {
        if (!isFinite(value)) return NaN;
        switch (unit) {
          case "ft":
            return value;
          case "in":
            return value / 12;
          case "m":
            return value * 3.280839895;
          case "cm":
            return value * 0.03280839895;
          default:
            return NaN;
        }
      }

      function volumeFromShape(shape, dimsFt, depthFt) {
        if (depthFt <= 0) return 0;
        let areaFt2 = 0;
        if (shape === "rectangle") {
          areaFt2 = dimsFt.length * dimsFt.width;
        } else if (shape === "circle") {
          const r = dimsFt.diameter / 2;
          areaFt2 = Math.PI * r * r;
        } else if (shape === "border") {
          const R = dimsFt.outerDiameter / 2;
          const r = dimsFt.innerDiameter / 2;
          areaFt2 = Math.PI * (R * R - r * r);
        } else if (shape === "custom") {
          areaFt2 = dimsFt.area;
        }
        return areaFt2 * depthFt; // ft³
      }

      function formatNumber(x, decimals = 2) {
        if (!isFinite(x)) return "–";
        return x.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: 0,
        });
      }

      // Tab handling
      const tabSimple = document.getElementById("tab-simple");
      const tabAdvanced = document.getElementById("tab-advanced");
      const panelSimple = document.getElementById("panel-simple");
      const panelAdvanced = document.getElementById("panel-advanced");

      function setTab(active) {
        if (active === "simple") {
          tabSimple.classList.add("tab-active");
          tabSimple.setAttribute("aria-selected", "true");
          tabAdvanced.classList.remove("tab-active");
          tabAdvanced.setAttribute("aria-selected", "false");
          panelSimple.classList.remove("hidden");
          panelAdvanced.classList.add("hidden");
        } else {
          tabAdvanced.classList.add("tab-active");
          tabAdvanced.setAttribute("aria-selected", "true");
          tabSimple.classList.remove("tab-active");
          tabSimple.setAttribute("aria-selected", "false");
          panelAdvanced.classList.remove("hidden");
          panelSimple.classList.add("hidden");
        }
      }

      tabSimple.addEventListener("click", () => setTab("simple"));
      tabAdvanced.addEventListener("click", () => setTab("advanced"));

      // Shape buttons
      const shapeButtons = document.querySelectorAll(".shape-btn");
      const shapeInputsContainer = document.getElementById("shape-inputs");

      function renderShapeInputs(shape) {
        if (shape === "rectangle") {
          shapeInputsContainer.innerHTML = `
        <div>
          <label for="length" class="block text-sm font-medium mb-1">Length</label>
          <input id="length" type="number" min="0" step="0.01" class="w-full border rounded-md px-3 py-2 text-sm" placeholder="e.g. 20">
        </div>
        <div>
          <label for="width" class="block text-sm font-medium mb-1">Width</label>
          <input id="width" type="number" min="0" step="0.01" class="w-full border rounded-md px-3 py-2 text-sm" placeholder="e.g. 10">
        </div>
      `;
        } else if (shape === "circle") {
          shapeInputsContainer.innerHTML = `
        <div>
          <label for="diameter" class="block text-sm font-medium mb-1">Diameter</label>
          <input id="diameter" type="number" min="0" step="0.01" class="w-full border rounded-md px-3 py-2 text-sm" placeholder="e.g. 12">
        </div>
      `;
        } else if (shape === "border") {
          shapeInputsContainer.innerHTML = `
        <div>
          <label for="outer-diameter" class="block text-sm font-medium mb-1">Outer diameter</label>
          <input id="outer-diameter" type="number" min="0" step="0.01" class="w-full border rounded-md px-3 py-2 text-sm" placeholder="e.g. 10">
        </div>
        <div>
          <label for="inner-diameter" class="block text-sm font-medium mb-1">Inner diameter</label>
          <input id="inner-diameter" type="number" min="0" step="0.01" class="w-full border rounded-md px-3 py-2 text-sm" placeholder="e.g. 4">
        </div>
      `;
        }
      }

      shapeButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          shapeButtons.forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          renderShapeInputs(btn.dataset.shape);
        });
      });

      // Initial shape inputs
      renderShapeInputs("rectangle");

      // Simple calculation
      const btnCalcSimple = document.getElementById("btn-calc-simple");
      const btnResetSimple = document.getElementById("btn-reset-simple");
      const errorSimple = document.getElementById("error-simple");

      function getSimpleShape() {
        let shape = "rectangle";
        shapeButtons.forEach((b) => {
          if (b.classList.contains("tab-active")) shape = b.dataset.shape;
        });
        return shape;
      }

      function clearErrors(container) {
        errorSimple.classList.add("hidden");
        errorAdvanced.classList.add("hidden");
        container
          .querySelectorAll("input")
          .forEach((inp) => inp.classList.remove("input-error"));
      }

      function showResults(
        volumeFt3,
        bagVolume,
        bagUnit,
        bulkDensity,
        bulkDensityUnit
      ) {
        const resultsMain = document.getElementById("results-main");
        const resYd3 = document.getElementById("res-yd3");
        const resFt3 = document.getElementById("res-ft3");
        const resM3 = document.getElementById("res-m3");
        const resL = document.getElementById("res-L");
        const resBags = document.getElementById("res-bags");
        const resWeightUS = document.getElementById("res-weight-us");
        const resWeightMetric = document.getElementById("res-weight-metric");
        const resNote = document.getElementById("res-note");

        if (!isFinite(volumeFt3) || volumeFt3 <= 0) {
          resultsMain.classList.add("hidden");
          return;
        }

        const yd3 = volumeFt3 / 27;
        const m3 = volumeFt3 / 35.3147;
        const L = m3 * 1000;

        resYd3.textContent = formatNumber(yd3, 2);
        resFt3.textContent = formatNumber(volumeFt3, 2);
        resM3.textContent = formatNumber(m3, 3);
        resL.textContent = formatNumber(L, 0);

        // Bags
        let bags = NaN;
        if (bagVolume && bagVolume > 0) {
          let bagFt3 = bagVolume;
          if (bagUnit === "L") {
            const bagM3 = bagVolume / 1000;
            bagFt3 = bagM3 * 35.3147;
          }
          bags = volumeFt3 / bagFt3;
        }
        resBags.textContent =
          isFinite(bags) && bags > 0 ? formatNumber(bags, 1) : "–";

        // Weight
        let weightUS = "–";
        let weightMetric = "–";
        if (bulkDensity && bulkDensity > 0) {
          let tonsUS, kg;
          if (bulkDensityUnit === "ton_per_yd3") {
            const yd3Vol = yd3;
            const tons = bulkDensity * yd3Vol;
            const lbs = tons * 2000;
            tonsUS = tons;
            kg = tons * 907.185;
          } else if (bulkDensityUnit === "kg_per_m3") {
            const totalKg = bulkDensity * m3;
            kg = totalKg;
            const tons = totalKg / 907.185;
            tonsUS = tons;
          }
          if (isFinite(tonsUS) && tonsUS > 0) {
            weightUS = `${formatNumber(tonsUS, 2)} US tons (${formatNumber(
              tonsUS * 2000,
              0
            )} lb)`;
          }
          if (isFinite(kg) && kg > 0) {
            weightMetric = `${formatNumber(
              kg / 1000,
              2
            )} metric tons (${formatNumber(kg, 0)} kg)`;
          }
        }

        resWeightUS.textContent = weightUS;
        resWeightMetric.textContent = weightMetric;
        resNote.textContent =
          "Tip: Consider ordering 5–10% extra soil to account for settling and measurement uncertainty.";
        resultsMain.classList.remove("hidden");
      }

      btnCalcSimple.addEventListener("click", () => {
        const container = panelSimple;
        clearErrors(container);
        const unitLength = document.getElementById("unit-length").value;
        const unitDepth = document.getElementById("unit-depth").value;
        const depthVal = parseFloat(document.getElementById("depth").value);
        const wasteVal =
          parseFloat(document.getElementById("waste").value) || 0;
        const bagVolume = parseFloat(
          document.getElementById("bag-volume").value
        );
        const bagUnit = document.getElementById("bag-unit").value;
        const bulkDensity = parseFloat(
          document.getElementById("bulk-density").value
        );
        const bulkDensityUnit =
          document.getElementById("bulk-density-unit").value;

        const shape = getSimpleShape();
        let dimsFt = {};
        let valid = true;

        function markError(id) {
          const el = document.getElementById(id);
          if (el) el.classList.add("input-error");
          valid = false;
        }

        if (!isFinite(depthVal) || depthVal <= 0) {
          markError("depth");
        }

        if (shape === "rectangle") {
          const lengthVal = parseFloat(document.getElementById("length").value);
          const widthVal = parseFloat(document.getElementById("width").value);
          if (!isFinite(lengthVal) || lengthVal <= 0) markError("length");
          if (!isFinite(widthVal) || widthVal <= 0) markError("width");
          dimsFt.length = toFeet(lengthVal, unitLength);
          dimsFt.width = toFeet(widthVal, unitLength);
        } else if (shape === "circle") {
          const dVal = parseFloat(document.getElementById("diameter").value);
          if (!isFinite(dVal) || dVal <= 0) markError("diameter");
          dimsFt.diameter = toFeet(dVal, unitLength);
        } else if (shape === "border") {
          const outerVal = parseFloat(
            document.getElementById("outer-diameter").value
          );
          const innerVal = parseFloat(
            document.getElementById("inner-diameter").value
          );
          if (!isFinite(outerVal) || outerVal <= 0) markError("outer-diameter");
          if (!isFinite(innerVal) || innerVal <= 0) markError("inner-diameter");
          if (
            isFinite(outerVal) &&
            isFinite(innerVal) &&
            innerVal >= outerVal
          ) {
            markError("inner-diameter");
          }
          dimsFt.outerDiameter = toFeet(outerVal, unitLength);
          dimsFt.innerDiameter = toFeet(innerVal, unitLength);
        }

        if (!valid) {
          errorSimple.classList.remove("hidden");
          return;
        }

        const depthFt = toFeet(depthVal, unitDepth);
        let volumeFt3 = volumeFromShape(shape, dimsFt, depthFt);
        if (wasteVal > 0) {
          volumeFt3 *= 1 + wasteVal / 100;
        }
        showResults(
          volumeFt3,
          bagVolume,
          bagUnit,
          bulkDensity,
          bulkDensityUnit
        );
      });

      btnResetSimple.addEventListener("click", () => {
        document.getElementById("unit-length").value = "ft";
        document.getElementById("unit-depth").value = "in";
        document.getElementById("depth").value = "";
        document.getElementById("waste").value = 10;
        document.getElementById("bag-volume").value = "";
        document.getElementById("bag-unit").value = "ft3";
        document.getElementById("bulk-density").value = "";
        document.getElementById("bulk-density-unit").value = "ton_per_yd3";
        renderShapeInputs("rectangle");
        shapeButtons.forEach((b) => {
          b.classList.toggle("tab-active", b.dataset.shape === "rectangle");
        });
        clearErrors(panelSimple);
        document.getElementById("results-main").classList.add("hidden");
      });

      // Advanced mode
      const areasContainer = document.getElementById("areas-container");
      const btnAddRect = document.getElementById("btn-add-rect");
      const btnAddCircle = document.getElementById("btn-add-circle");
      const btnAddCustom = document.getElementById("btn-add-custom");
      const btnCalcAdvanced = document.getElementById("btn-calc-advanced");
      const btnResetAdvanced = document.getElementById("btn-reset-advanced");
      const errorAdvanced = document.getElementById("error-advanced");

      let areaIdCounter = 0;

      function addAreaRow(type) {
        areaIdCounter++;
        const id = "area-" + areaIdCounter;
        let html = "";
        if (type === "rectangle") {
          html = `
        <div class="p-3 flex flex-col gap-2" data-type="rectangle" id="${id}">
          <div class="flex justify-between items-center">
            <span class="text-sm font-semibold">Rectangle #${areaIdCounter}</span>
            <button type="button" class="text-xs text-red-600 hover:underline btn-remove-area">Remove</button>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
            <div>
              <label class="block text-xs mb-1">Length</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-length">
            </div>
            <div>
              <label class="block text-xs mb-1">Width</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-width">
            </div>
            <div>
              <label class="block text-xs mb-1">Depth</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-depth">
            </div>
          </div>
        </div>`;
        } else if (type === "circle") {
          html = `
        <div class="p-3 flex flex-col gap-2" data-type="circle" id="${id}">
          <div class="flex justify-between items-center">
            <span class="text-sm font-semibold">Circle #${areaIdCounter}</span>
            <button type="button" class="text-xs text-red-600 hover:underline btn-remove-area">Remove</button>
          </div>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
            <div>
              <label class="block text-xs mb-1">Diameter</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-diameter">
            </div>
            <div>
              <label class="block text-xs mb-1">Depth</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-depth">
            </div>
          </div>
        </div>`;
        } else if (type === "custom") {
          html = `
        <div class="p-3 flex flex-col gap-2" data-type="custom" id="${id}">
          <div class="flex justify-between items-center">
            <span class="text-sm font-semibold">Custom area #${areaIdCounter}</span>
            <button type="button" class="text-xs text-red-600 hover:underline btn-remove-area">Remove</button>
          </div>
          <p class="text-xs text-gray-600">Measure or estimate the total area (e.g. from a plan or mapping tool) and enter it directly.</p>
          <div class="grid grid-cols-1 sm:grid-cols-3 gap-2">
            <div>
              <label class="block text-xs mb-1">Area (ft²)</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-area">
            </div>
            <div>
              <label class="block text-xs mb-1">Depth</label>
              <input type="number" min="0" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm area-depth">
            </div>
          </div>
        </div>`;
        }
        areasContainer.insertAdjacentHTML("beforeend", html);
      }

      btnAddRect.addEventListener("click", () => addAreaRow("rectangle"));
      btnAddCircle.addEventListener("click", () => addAreaRow("circle"));
      btnAddCustom.addEventListener("click", () => addAreaRow("custom"));

      areasContainer.addEventListener("click", (e) => {
        if (e.target.classList.contains("btn-remove-area")) {
          const row = e.target.closest('[id^="area-"]');
          if (row) row.remove();
        }
      });

      btnCalcAdvanced.addEventListener("click", () => {
        clearErrors(panelAdvanced);
        const rows = Array.from(areasContainer.children);
        if (rows.length === 0) {
          errorAdvanced.textContent = "Please add at least one area.";
          errorAdvanced.classList.remove("hidden");
          return;
        }

        const unitLength = document.getElementById("adv-unit-length").value;
        const unitDepth = document.getElementById("adv-unit-depth").value;
        const wasteVal =
          parseFloat(document.getElementById("adv-waste").value) || 0;
        const bagVolume = parseFloat(
          document.getElementById("adv-bag-volume").value
        );
        const bagUnit = document.getElementById("adv-bag-unit").value;
        const bulkDensity = parseFloat(
          document.getElementById("adv-bulk-density").value
        );
        const bulkDensityUnit = document.getElementById(
          "adv-bulk-density-unit"
        ).value;

        let totalFt3 = 0;
        let valid = true;

        rows.forEach((row) => {
          const type = row.dataset.type;
          let depthVal,
            depthFt,
            dimsFt = {};
          function markRowError(selector) {
            const el = row.querySelector(selector);
            if (el) el.classList.add("input-error");
            valid = false;
          }

          if (type === "rectangle") {
            const lengthVal = parseFloat(
              row.querySelector(".area-length").value
            );
            const widthVal = parseFloat(row.querySelector(".area-width").value);
            depthVal = parseFloat(row.querySelector(".area-depth").value);
            if (!isFinite(lengthVal) || lengthVal <= 0)
              markRowError(".area-length");
            if (!isFinite(widthVal) || widthVal <= 0)
              markRowError(".area-width");
            if (!isFinite(depthVal) || depthVal <= 0)
              markRowError(".area-depth");
            dimsFt.length = toFeet(lengthVal, unitLength);
            dimsFt.width = toFeet(widthVal, unitLength);
          } else if (type === "circle") {
            const dVal = parseFloat(row.querySelector(".area-diameter").value);
            depthVal = parseFloat(row.querySelector(".area-depth").value);
            if (!isFinite(dVal) || dVal <= 0) markRowError(".area-diameter");
            if (!isFinite(depthVal) || depthVal <= 0)
              markRowError(".area-depth");
            dimsFt.diameter = toFeet(dVal, unitLength);
          } else if (type === "custom") {
            const areaVal = parseFloat(row.querySelector(".area-area").value);
            depthVal = parseFloat(row.querySelector(".area-depth").value);
            if (!isFinite(areaVal) || areaVal <= 0) markRowError(".area-area");
            if (!isFinite(depthVal) || depthVal <= 0)
              markRowError(".area-depth");
            dimsFt.area = areaVal; // already ft²
          }

          if (!isFinite(depthVal) || depthVal <= 0) return;
          depthFt = toFeet(depthVal, unitDepth);
          totalFt3 += volumeFromShape(
            type === "custom" ? "custom" : type,
            dimsFt,
            depthFt
          );
        });

        if (!valid || totalFt3 <= 0) {
          errorAdvanced.textContent =
            "Please fill in valid positive values for all areas.";
          errorAdvanced.classList.remove("hidden");
          return;
        }

        if (wasteVal > 0) {
          totalFt3 *= 1 + wasteVal / 100;
        }

        showResults(totalFt3, bagVolume, bagUnit, bulkDensity, bulkDensityUnit);
      });

      btnResetAdvanced.addEventListener("click", () => {
        areasContainer.innerHTML = "";
        document.getElementById("adv-unit-length").value = "ft";
        document.getElementById("adv-unit-depth").value = "in";
        document.getElementById("adv-waste").value = 10;
        document.getElementById("adv-bag-volume").value = "";
        document.getElementById("adv-bag-unit").value = "ft3";
        document.getElementById("adv-bulk-density").value = "";
        document.getElementById("adv-bulk-density-unit").value = "ton_per_yd3";
        clearErrors(panelAdvanced);
        document.getElementById("results-main").classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
