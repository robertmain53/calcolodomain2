        let resultText = "";
        let noteText = "";
        let value = fromValue;

        const isFromWeight = fromUnit === "g" || fromUnit === "kg";
        const isToWeight = toUnit === "g" || toUnit === "kg";

        // Convert weight units directly
        if (isFromWeight && isToWeight) {
          let grams = fromUnit === "kg" ? value * 1000 : value;
          let out;
          if (toUnit === "kg") {
            out = grams / 1000;
          } else {
            out = grams;
          }
          resultText = `${fromValue} ${fromUnit} ≈ ${out.toFixed(2)} ${toUnit}`;
          noteText = "Weight-to-weight conversions are exact within rounding.";
        } else {
          // Need volume in mL
          let ml;
          if (
            fromUnit === "ml" ||
            fromUnit === "l" ||
            fromUnit === "tsp" ||
            fromUnit === "tbsp" ||
            fromUnit === "cup" ||
            fromUnit === "floz"
          ) {
            // volume to mL
            if (fromUnit === "ml" || fromUnit === "l") {
              ml = value * volumeToMl[fromUnit];
            } else {
              ml = value * volumeToMl[fromUnit];
            }
          } else if (isFromWeight) {
            // weight to volume using density
            const density = ingredientDensities[ingredient];
            if (!density) {
              resultEl.classList.remove("hidden");
              noteEl.classList.remove("hidden");
              resultEl.textContent =
                "Select a specific ingredient to convert between weight and volume.";
              noteEl.textContent =
                "Generic conversions between grams and cups are not accurate because density varies by ingredient.";
              return;
            }
            const grams = fromUnit === "kg" ? value * 1000 : value;
            const cups = grams / density;
            ml = cups * volumeToMl["cup"];
          } else {
            // unsupported
            resultEl.classList.add("hidden");
            noteEl.classList.add("hidden");
            return;
          }

          // Now convert to target
          if (
            toUnit === "ml" ||
            toUnit === "l" ||
            toUnit === "tsp" ||
            toUnit === "tbsp" ||
            toUnit === "cup" ||
            toUnit === "floz"
          ) {
            let out;
            if (toUnit === "ml" || toUnit === "l") {
              out = ml / volumeToMl[toUnit];
            } else {
              out = ml / volumeToMl[toUnit];
            }
            resultText = `${fromValue} ${fromUnit} ≈ ${out.toFixed(
              2
            )} ${toUnit}`;
            noteText =
              "Volume conversions are approximate and rounded for kitchen use.";
          } else if (isToWeight) {
            const density = ingredientDensities[ingredient];
            if (!density) {
              resultEl.classList.remove("hidden");
              noteEl.classList.remove("hidden");
              resultEl.textContent =
                "Select a specific ingredient to convert between volume and grams.";
              noteEl.textContent =
                "Different ingredients have different densities, so 1 cup does not always equal the same grams.";
              return;
            }
            const cups = ml / volumeToMl["cup"];
            let grams = cups * density;
            let out;
            if (toUnit === "kg") {
              out = grams / 1000;
            } else {
              out = grams;
            }
            resultText = `${fromValue} ${fromUnit} of ${
              document.getElementById("from-ingredient").selectedOptions[0].text
            } ≈ ${out.toFixed(1)} ${toUnit}`;
            noteText =
              "Weight conversions use typical grams-per-cup values and are approximate.";
          }
        }

        resultEl.textContent = resultText;
        resultEl.classList.remove("hidden");
        noteEl.textContent = noteText;
        noteEl.classList.remove("hidden");
      }

      document
        .getElementById("convert-btn")
        .addEventListener("click", convertCooking);

      // Tabs
      document.querySelectorAll("[data-tab]").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll("[data-tab]")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document.querySelectorAll(".tab-panel").forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "tab-" + target);
          });
        });
      });

      // Oven converter
      document
        .getElementById("oven-convert-fc")
        .addEventListener("click", () => {
          const f = parseFloat(document.getElementById("oven-f").value);
          if (isNaN(f)) return;
          const c = (f - 32) / 1.8;
          document.getElementById("oven-c").value = c.toFixed(1);
        });
      document
        .getElementById("oven-convert-cf")
        .addEventListener("click", () => {
          const c = parseFloat(document.getElementById("oven-c").value);
          if (isNaN(c)) return;
          const f = c * 1.8 + 32;
          document.getElementById("oven-f").value = f.toFixed(1);
        });

      // Pan area
      const panShapeEl = document.getElementById("pan-shape");
      const panDimRect = document.getElementById("pan-dim-rect");
      const panDimRound = document.getElementById("pan-dim-round");
      panShapeEl.addEventListener("change", () => {
        if (panShapeEl.value === "rect") {
          panDimRect.classList.remove("hidden");
          panDimRound.classList.add("hidden");
        } else {
          panDimRect.classList.add("hidden");
          panDimRound.classList.remove("hidden");
        }
      });

      document.getElementById("pan-area-btn").addEventListener("click", () => {
        const shape = panShapeEl.value;
        const unit = document.getElementById("pan-unit").value;
        let area = 0;
        if (shape === "rect") {
          const L = parseFloat(document.getElementById("pan-length").value);
          const W = parseFloat(document.getElementById("pan-width").value);
          if (isNaN(L) || isNaN(W) || L <= 0 || W <= 0) return;
          area = L * W;
        } else {
          const D = parseFloat(document.getElementById("pan-diameter").value);
          if (isNaN(D) || D <= 0) return;
          area = Math.PI * Math.pow(D / 2, 2);
        }
        const unitSq = unit === "in" ? "in²" : "cm²";
        document.getElementById(
          "pan-area-result"
        ).textContent = `Pan area ≈ ${area.toFixed(
          1
        )} ${unitSq}. Use this to compare with your recipe's original pan.`;
      });

      // Initialize some defaults
      document.addEventListener("DOMContentLoaded", () => {
        document.getElementById("from-value").value = 1;
        document.getElementById("oven-f").value = 350;
        document.getElementById("oven-c").value = 175;
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
