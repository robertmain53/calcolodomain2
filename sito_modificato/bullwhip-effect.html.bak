    <script>
      // Simple normal random generator (Box-Muller)
      function randn() {
        let u = 0,
          v = 0;
        while (u === 0) u = Math.random();
        while (v === 0) v = Math.random();
        return Math.sqrt(-2.0 * Math.log(u)) * Math.cos(2.0 * Math.PI * v);
      }

      function variance(arr) {
        if (!arr || arr.length === 0) return 0;
        const n = arr.length;
        const mean = arr.reduce((a, b) => a + b, 0) / n;
        let s = 0;
        for (let i = 0; i < n; i++) {
          const d = arr[i] - mean;
          s += d * d;
        }
        return s / n;
      }

      function runBullwhipSimulation() {
        const T = Math.max(
          10,
          Math.min(
            200,
            parseInt(document.getElementById("periods").value) || 40
          )
        );
        const baseDemand = Math.max(
          0,
          parseFloat(document.getElementById("baseDemand").value) || 0
        );
        const demandStd = Math.max(
          0,
          parseFloat(document.getElementById("demandStd").value) || 0
        );
        const nonNeg = document.getElementById("nonNegativeDemand").checked;
        const w = Math.max(
          1,
          Math.min(
            20,
            parseInt(document.getElementById("forecastWindow").value) || 4
          )
        );
        const L = Math.max(
          0,
          Math.min(10, parseInt(document.getElementById("leadTime").value) || 0)
        );
        const kGlobal = Math.max(
          0,
          parseFloat(document.getElementById("safetyK").value) || 0
        );
        const reviewPeriod = Math.max(
          1,
          parseInt(document.getElementById("reviewPeriod").value) || 1
        );

        const kRetailer = parseFloat(
          document.getElementById("kRetailer").value
        );
        const kWholesaler = parseFloat(
          document.getElementById("kWholesaler").value
        );
        const kDistributor = parseFloat(
          document.getElementById("kDistributor").value
        );
        const kFactory = parseFloat(document.getElementById("kFactory").value);

        const kStages = [
          isNaN(kRetailer) ? kGlobal : kRetailer,
          isNaN(kWholesaler) ? kGlobal : kWholesaler,
          isNaN(kDistributor) ? kGlobal : kDistributor,
          isNaN(kFactory) ? kGlobal : kFactory,
        ];

        const statusEl = document.getElementById("simStatus");
        statusEl.textContent = "Running simulation…";

        // 1. Generate customer demand
        const demand = [];
        for (let t = 0; t < T; t++) {
          let val = baseDemand + demandStd * randn();
          if (nonNeg && val < 0) val = 0;
          demand.push(val);
        }

        // Helper: compute moving average and std over last w observations
        function movingStats(series, t, window) {
          const start = Math.max(0, t - window + 1);
          const slice = series.slice(start, t + 1);
          const n = slice.length;
          const mean = slice.reduce((a, b) => a + b, 0) / n;
          let s = 0;
          for (let i = 0; i < n; i++) {
            const d = slice[i] - mean;
            s += d * d;
          }
          const std = Math.sqrt(s / n);
          return { mean, std };
        }

        // Stage structure
        const stages = [
          {
            name: "Retailer",
            observedDemand: demand.slice(),
            orders: new Array(T).fill(0),
          },
          {
            name: "Wholesaler",
            observedDemand: new Array(T).fill(0),
            orders: new Array(T).fill(0),
          },
          {
            name: "Distributor",
            observedDemand: new Array(T).fill(0),
            orders: new Array(T).fill(0),
          },
          {
            name: "Factory",
            observedDemand: new Array(T).fill(0),
            orders: new Array(T).fill(0),
          },
        ];

        // Initialize inventory positions (start at baseDemand * (L+1) as a heuristic)
        const invPos = stages.map(() => baseDemand * (L + 1));

        // Pipeline orders: for each stage, an array of length L with future arrivals
        const pipeline = stages.map(() => new Array(L).fill(0));

        // Simulation loop
        for (let t = 0; t < T; t++) {
          // 1) Realize demand at each stage (downstream demand is previous stage's orders)
          for (let s = 1; s < stages.length; s++) {
            stages[s].observedDemand[t] = stages[s - 1].orders[t] || 0;
          }

          // 2) Receive pipeline orders (arrivals) and update inventory position
          for (let s = 0; s < stages.length; s++) {
            if (L > 0) {
              const arriving = pipeline[s][0] || 0;
              invPos[s] += arriving; // on-hand + on-order
              // shift pipeline
              for (let j = 0; j < L - 1; j++) {
                pipeline[s][j] = pipeline[s][j + 1];
              }
              pipeline[s][L - 1] = 0;
            }
          }

          // 3) Fulfill demand (reduce inventory position)
          for (let s = 0; s < stages.length; s++) {
            const dObs = stages[s].observedDemand[t] || 0;
            invPos[s] -= dObs;
          }

          // 4) Place orders at review periods
          for (let s = 0; s < stages.length; s++) {
            if (t % reviewPeriod !== 0) {
              stages[s].orders[t] = 0;
              continue;
            }
            const series = stages[s].observedDemand;
            const { mean, std } = movingStats(series, t, w);
            const k = kStages[s];
            const target = mean * L + k * std * Math.sqrt(L);
            let Q = target - invPos[s];
            if (Q < 0) Q = 0;
            stages[s].orders[t] = Q;

            if (L > 0) {
              pipeline[s][L - 1] += Q;
            } else {
              invPos[s] += Q;
            }
          }
        }

        // Compute variances
        const varDemand = variance(demand);
        const varRetailer = variance(stages[0].orders);
        const varWholesaler = variance(stages[1].orders);
        const varDistributor = variance(stages[2].orders);
        const varFactory = variance(stages[3].orders);

        function fmt(x) {
          if (!isFinite(x)) return "–";
          if (Math.abs(x) >= 1000) return x.toFixed(0);
          if (Math.abs(x) >= 10) return x.toFixed(1);
          return x.toFixed(2);
        }

        document.getElementById("varDemand").textContent = fmt(varDemand);
        document.getElementById("varRetailer").textContent = fmt(varRetailer);
        document.getElementById("varWholesaler").textContent =
          fmt(varWholesaler);
        document.getElementById("varDistributor").textContent =
          fmt(varDistributor);
        document.getElementById("varFactory").textContent = fmt(varFactory);

        const ratioRetailer = varDemand > 0 ? varRetailer / varDemand : NaN;
        const ratioWholesaler = varDemand > 0 ? varWholesaler / varDemand : NaN;
        const ratioDistributor =
          varDemand > 0 ? varDistributor / varDemand : NaN;
        const ratioFactory = varDemand > 0 ? varFactory / varDemand : NaN;

        document.getElementById("ratioRetailer").textContent = isFinite(
          ratioRetailer
        )
          ? fmt(ratioRetailer)
          : "–";
        document.getElementById("ratioWholesaler").textContent = isFinite(
          ratioWholesaler
        )
          ? fmt(ratioWholesaler)
          : "–";
        document.getElementById("ratioDistributor").textContent = isFinite(
          ratioDistributor
        )
          ? fmt(ratioDistributor)
          : "–";
        document.getElementById("ratioFactory").textContent = isFinite(
          ratioFactory
        )
          ? fmt(ratioFactory)
          : "–";

        // Summary text
        let summary = "";
        if (isFinite(ratioFactory)) {
          summary += `Factory variability is about ${fmt(
            ratioFactory
          )}× customer demand variance. `;
        }
        if (isFinite(ratioRetailer) && isFinite(ratioWholesaler)) {
          if (
            ratioFactory > ratioWholesaler &&
            ratioWholesaler > ratioRetailer
          ) {
            summary +=
              "Variability increases steadily as you move upstream, a classic bullwhip pattern.";
          } else if (
            ratioFactory <= 1 &&
            ratioWholesaler <= 1 &&
            ratioRetailer <= 1
          ) {
            summary +=
              "All stages are smoothing demand variability (no strong bullwhip effect).";
          } else {
            summary +=
              "Some stages amplify demand more than others. Try changing lead times, safety stock, or review period to see different behaviors.";
          }
        }
        document.getElementById("summaryText").textContent = summary;

        // Fill time series table (first 40 periods)
        const maxRows = Math.min(40, T);
        const tbody = document.getElementById("timeseriesBody");
        tbody.innerHTML = "";
        for (let t = 0; t < maxRows; t++) {
          const tr = document.createElement("tr");
          const cells = [
            t + 1,
            demand[t],
            stages[0].orders[t],
            stages[1].orders[t],
            stages[2].orders[t],
            stages[3].orders[t],
          ];
          cells.forEach((val, idx) => {
            const td = document.createElement("td");
            td.className = "px-2 py-1 border-b text-right";
            if (idx === 0) {
              td.className = "px-2 py-1 border-b text-left";
              td.textContent = val;
            } else {
              td.textContent = fmt(val);
            }
            tr.appendChild(td);
          });
          tbody.appendChild(tr);
        }

        statusEl.textContent = "Simulation complete.";
      }

      document
        .getElementById("runSimulation")
        .addEventListener("click", runBullwhipSimulation);
      document.getElementById("resetDefaults").addEventListener("click", () => {
        document.getElementById("periods").value = 40;
        document.getElementById("baseDemand").value = 100;
        document.getElementById("demandStd").value = 10;
        document.getElementById("nonNegativeDemand").checked = true;
        document.getElementById("forecastWindow").value = 4;
        document.getElementById("leadTime").value = 2;
        document.getElementById("safetyK").value = 1.0;
        document.getElementById("reviewPeriod").value = 1;
        document.getElementById("kRetailer").value = "";
        document.getElementById("kWholesaler").value = "";
        document.getElementById("kDistributor").value = "";
        document.getElementById("kFactory").value = "";
        document.getElementById("simStatus").textContent = "";
        document.getElementById("timeseriesBody").innerHTML = "";
        [
          "varDemand",
          "varRetailer",
          "varWholesaler",
          "varDistributor",
          "varFactory",
          "ratioRetailer",
          "ratioWholesaler",
          "ratioDistributor",
          "ratioFactory",
        ].forEach((id) => (document.getElementById(id).textContent = "–"));
        document.getElementById("summaryText").textContent = "";
      });

      // Auto-run once on load for an immediate example
      window.addEventListener("load", runBullwhipSimulation);
    </script>

