    <script>
      // Simple mapping from birth year to typical required quarters and legal ages (post-2023 reform, approximate)
      function estimateFrenchPensionParams(birthYear) {
        let requiredQuarters = 172; // default for many cohorts after reform
        let legalAge = 64;
        let fullRateAge = 67;

        if (birthYear <= 1955) {
          requiredQuarters = 166;
          legalAge = 62;
          fullRateAge = 67;
        } else if (birthYear <= 1960) {
          requiredQuarters = 167;
          legalAge = 62;
          fullRateAge = 67;
        } else if (birthYear <= 1963) {
          requiredQuarters = 168;
          legalAge = 62;
          fullRateAge = 67;
        } else if (birthYear <= 1966) {
          requiredQuarters = 169;
          legalAge = 63; // transition
          fullRateAge = 67;
        } else if (birthYear <= 1970) {
          requiredQuarters = 172;
          legalAge = 64;
          fullRateAge = 67;
        } else {
          requiredQuarters = 172;
          legalAge = 64;
          fullRateAge = 67;
        }

        return { requiredQuarters, legalAge, fullRateAge };
      }

      function formatCurrencyEUR(value) {
        if (!isFinite(value)) return "€0";
        return new Intl.NumberFormat("en-FR", {
          style: "currency",
          currency: "EUR",
          maximumFractionDigits: 0,
        }).format(value);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const birthYearEl = document.getElementById("birth-year");
        const retirementAgeEl = document.getElementById("retirement-age");
        const quartersEl = document.getElementById("quarters");
        const avgSalaryEl = document.getElementById("avg-salary");
        const fullRateQuartersEl =
          document.getElementById("full-rate-quarters");
        const fullRateAgeEl = document.getElementById("full-rate-age");
        const maxRateEl = document.getElementById("max-rate");
        const decotePerQuarterEl =
          document.getElementById("decote-per-quarter");

        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorEl = document.getElementById("calc-error");
        const resultsCard = document.getElementById("results-card");

        const resultAnnualEl = document.getElementById("result-annual");
        const resultMonthlyEl = document.getElementById("result-monthly");
        const resultRateEl = document.getElementById("result-rate");
        const resultQuartersUsedEl = document.getElementById(
          "result-quarters-used"
        );
        const resultQuartersRequiredEl = document.getElementById(
          "result-quarters-required"
        );
        const resultLegalAgeEl = document.getElementById("result-legal-age");
        const resultFullAgeEl = document.getElementById("result-full-age");
        const resultYourAgeEl = document.getElementById("result-your-age");
        const resultAgeNoteEl = document.getElementById("result-age-note");
        const resultMissingQuartersEl = document.getElementById(
          "result-missing-quarters"
        );
        const resultDecoteEl = document.getElementById("result-decote");
        const resultSurcoteEl = document.getElementById("result-surcote");
        const resultWarningEl = document.getElementById("result-warning");

        function calculate() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          const birthYear = parseInt(birthYearEl.value, 10);
          const retirementAge = parseFloat(retirementAgeEl.value);
          const quarters = parseFloat(quartersEl.value);
          const avgSalary = parseFloat(avgSalaryEl.value);
          let requiredQuarters = parseFloat(fullRateQuartersEl.value);
          let fullRateAge = parseFloat(fullRateAgeEl.value);
          const maxRate = parseFloat(maxRateEl.value);
          const decotePerQuarter = parseFloat(decotePerQuarterEl.value);

          if (!birthYear || birthYear < 1940 || birthYear > 2010) {
            errorEl.textContent =
              "Please enter a valid year of birth (1940–2010).";
            errorEl.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }
          if (!retirementAge || retirementAge < 55 || retirementAge > 75) {
            errorEl.textContent =
              "Please enter a realistic planned retirement age (55–75).";
            errorEl.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }
          if (!quarters || quarters < 0) {
            errorEl.textContent =
              "Please enter your total validated quarters in France.";
            errorEl.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }
          if (!avgSalary || avgSalary <= 0) {
            errorEl.textContent =
              "Please enter a positive average annual salary.";
            errorEl.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }
          if (!maxRate || maxRate <= 0 || maxRate > 75) {
            errorEl.textContent =
              "Please enter a realistic maximum pension rate (e.g. 50%).";
            errorEl.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }

          const estimated = estimateFrenchPensionParams(birthYear);
          if (!requiredQuarters || requiredQuarters <= 0) {
            requiredQuarters = estimated.requiredQuarters;
          }
          if (!fullRateAge || fullRateAge <= 0) {
            fullRateAge = estimated.fullRateAge;
          }
          const legalAge = estimated.legalAge;

          // Cap quarters at required for rate calculation, but keep actual for surcote
          const quartersForRate = Math.min(quarters, requiredQuarters);
          const missingQuarters = Math.max(
            0,
            requiredQuarters - quartersForRate
          );

          // Base rate before penalties/bonuses
          let rate = maxRate;

          // Apply decote if retiring before full-rate age and missing quarters
          let totalDecote = 0;
          let totalSurcote = 0;

          if (retirementAge < fullRateAge && missingQuarters > 0) {
            totalDecote = missingQuarters * decotePerQuarter;
            rate = Math.max(0, maxRate - totalDecote);
          }

          // Simple surcote: if at or after full-rate age and no missing quarters, bonus per extra quarter
          if (retirementAge >= fullRateAge && quarters >= requiredQuarters) {
            const extraQuarters = quarters - requiredQuarters;
            totalSurcote = extraQuarters * decotePerQuarter;
            rate = maxRate + totalSurcote;
          }

          // Proration by quarters
          const proration = quartersForRate / requiredQuarters;
          const annualPension = avgSalary * (rate / 100) * proration;
          const monthlyPension = annualPension / 12;

          // Update UI
          resultAnnualEl.textContent =
            formatCurrencyEUR(annualPension) + " / year";
          resultMonthlyEl.textContent =
            formatCurrencyEUR(monthlyPension) + " / month";
          resultRateEl.textContent = rate.toFixed(2);
          resultQuartersUsedEl.textContent = quartersForRate.toFixed(0);
          resultQuartersRequiredEl.textContent = requiredQuarters.toFixed(0);
          resultLegalAgeEl.textContent = legalAge.toFixed(0);
          resultFullAgeEl.textContent = fullRateAge.toFixed(0);
          resultYourAgeEl.textContent = retirementAge.toFixed(1);
          resultMissingQuartersEl.textContent = missingQuarters.toFixed(0);
          resultDecoteEl.textContent = totalDecote.toFixed(2);
          resultSurcoteEl.textContent = totalSurcote.toFixed(2);

          // Notes
          let ageNote = "";
          if (retirementAge < legalAge) {
            ageNote =
              "Your planned age is below the typical legal minimum age. In practice, early retirement is only possible in specific cases (long career, disability, etc.).";
          } else if (retirementAge < fullRateAge && missingQuarters > 0) {
            ageNote =
              "You are retiring before the automatic full-rate age and without all required quarters, so a penalty (décote) is applied.";
          } else if (
            retirementAge >= fullRateAge &&
            quarters >= requiredQuarters
          ) {
            ageNote =
              "You are at or above the full-rate age with enough quarters. A bonus (surcote) may apply for extra quarters.";
          } else {
            ageNote =
              "You are at or above the legal minimum age. The exact rules depend on your cohort and career history.";
          }
          resultAgeNoteEl.textContent = ageNote;

          let warning = "";
          if (annualPension <= 0) {
            warning =
              "The calculated amount is zero or negative, which suggests inconsistent inputs. Please review your data.";
          } else if (rate > maxRate * 1.5) {
            warning =
              "The effective rate is unusually high. Real-world surcote is capped; this is a simplified model.";
          } else if (missingQuarters > 0) {
            warning =
              "Penalty and required quarters are approximate. Check your official career statement for exact figures.";
          }
          resultWarningEl.textContent = warning;

          resultsCard.classList.remove("hidden");
        }

        function resetForm() {
          birthYearEl.value = 1965;
          retirementAgeEl.value = 64;
          quartersEl.value = 160;
          avgSalaryEl.value = 32000;
          fullRateQuartersEl.value = "";
          fullRateAgeEl.value = "";
          maxRateEl.value = 50;
          decotePerQuarterEl.value = 1.25;
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
          resultsCard.classList.add("hidden");
        }

        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetForm);

        // Allow Enter key to trigger calculation
        [
          birthYearEl,
          retirementAgeEl,
          quartersEl,
          avgSalaryEl,
          fullRateQuartersEl,
          fullRateAgeEl,
          maxRateEl,
          decotePerQuarterEl,
        ].forEach((el) => {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              calculate();
            }
          });
        });
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
