    <script>
      // Profit calculator logic
      (function () {
        const maxScenarios = 3;
        const scenariosContainer = document.getElementById(
          "scenarios-container"
        );
        const addBtn = document.getElementById("add-scenario");
        const resetBtn = document.getElementById("reset-scenarios");
        const currencyInput = document.getElementById("currency-symbol");
        const fixedCostsInput = document.getElementById("fixed-costs");
        const fixedCostsPrefix = document.getElementById("fixed-costs-prefix");
        const quantityInput = document.getElementById("quantity");
        const summaryEmpty = document.getElementById("summary-empty");
        const summaryTableWrapper = document.getElementById(
          "summary-table-wrapper"
        );
        const summaryTableBody = document.getElementById("summary-table-body");

        const modeTabs = document.querySelectorAll("[data-mode]");
        let currentMode = "from-price";
        let scenarioCount = 0;

        const scenarioColors = [
          { name: "Scenario A", color: "bg-blue-100 text-blue-800" },
          { name: "Scenario B", color: "bg-green-100 text-green-800" },
          { name: "Scenario C", color: "bg-purple-100 text-purple-800" },
        ];

        function formatCurrency(value) {
          const symbol = currencyInput.value || "$";
          if (isNaN(value) || !isFinite(value)) return symbol + "0.00";
          return symbol + value.toFixed(2);
        }

        function formatPercent(value) {
          if (isNaN(value) || !isFinite(value)) return "0.0%";
          return value.toFixed(1) + "%";
        }

        function parseNumber(input) {
          const v = parseFloat(input.value);
          return isNaN(v) ? 0 : v;
        }

        function createScenarioCard(index) {
          const colorInfo = scenarioColors[index];
          const card = document.createElement("div");
          card.className =
            "border border-gray-200 rounded-lg p-3 card-hover bg-white";
          card.dataset.scenarioIndex = index;

          card.innerHTML = `
        <div class="flex items-center justify-between mb-2">
          <div class="flex items-center space-x-2">
            <span class="scenario-badge inline-flex items-center px-2 py-0.5 rounded-full ${colorInfo.color} font-semibold">${colorInfo.name}</span>
            <input type="text" class="text-xs border border-gray-200 rounded px-1 py-0.5" placeholder="Label (optional)" aria-label="Scenario label">
          </div>
          <button type="button" class="text-xs text-red-500 hover:text-red-700 remove-scenario" aria-label="Remove scenario">&times;</button>
        </div>
        <div class="space-y-2 text-xs">
          <div>
            <label class="block text-gray-700 mb-0.5">Cost per unit</label>
            <div class="flex">
              <span class="inline-flex items-center px-2 border border-r-0 border-gray-300 rounded-l-md bg-gray-50 text-gray-500 currency-prefix">${currencyInput.value}</span>
              <input type="number" min="0" step="0.01" class="w-full border-gray-300 rounded-r-md px-2 py-1 cost-input" placeholder="0.00">
            </div>
          </div>
          <div data-field-group="from-price">
            <label class="block text-gray-700 mb-0.5">Price per unit</label>
            <div class="flex">
              <span class="inline-flex items-center px-2 border border-r-0 border-gray-300 rounded-l-md bg-gray-50 text-gray-500 currency-prefix">${currencyInput.value}</span>
              <input type="number" min="0" step="0.01" class="w-full border-gray-300 rounded-r-md px-2 py-1 price-input" placeholder="0.00">
            </div>
          </div>
          <div data-field-group="from-margin" class="hidden">
            <label class="block text-gray-700 mb-0.5">Target margin (%)</label>
            <input type="number" min="-100" max="100" step="0.1" class="w-full border-gray-300 rounded-md px-2 py-1 margin-input" placeholder="e.g. 40">
          </div>
          <div data-field-group="from-markup" class="hidden">
            <label class="block text-gray-700 mb-0.5">Target markup (%)</label>
            <input type="number" min="-100" max="1000" step="0.1" class="w-full border-gray-300 rounded-md px-2 py-1 markup-input" placeholder="e.g. 60">
          </div>
          <div class="pt-1 border-t border-dashed border-gray-200 mt-1">
            <p class="font-semibold text-gray-700 mb-1">Adjustments</p>
            <div class="grid grid-cols-2 gap-2">
              <div>
                <label class="block text-gray-700 mb-0.5">Discount (%)</label>
                <input type="number" min="0" max="100" step="0.1" class="w-full border-gray-300 rounded-md px-2 py-1 discount-input" placeholder="0">
              </div>
              <div>
                <label class="block text-gray-700 mb-0.5">Fees per unit</label>
                <div class="flex">
                  <span class="inline-flex items-center px-2 border border-r-0 border-gray-300 rounded-l-md bg-gray-50 text-gray-500 currency-prefix">${currencyInput.value}</span>
                  <input type="number" min="0" step="0.01" class="w-full border-gray-300 rounded-r-md px-2 py-1 fees-input" placeholder="0.00">
                </div>
              </div>
              <div>
                <label class="block text-gray-700 mb-0.5">Tax rate (%)</label>
                <input type="number" min="0" max="100" step="0.1" class="w-full border-gray-300 rounded-md px-2 py-1 tax-input" placeholder="0">
              </div>
              <div>
                <label class="block text-gray-700 mb-0.5">Tax included in price?</label>
                <select class="w-full border-gray-300 rounded-md px-2 py-1 text-xs tax-included-input">
                  <option value="no">No (added on top)</option>
                  <option value="yes">Yes (included)</option>
                </select>
              </div>
            </div>
          </div>
          <div class="mt-2 pt-2 border-t border-gray-200">
            <p class="font-semibold text-gray-700 mb-1">Results</p>
            <div class="space-y-0.5">
              <div class="flex justify-between"><span>Unit profit:</span><span class="font-medium unit-profit">–</span></div>
              <div class="flex justify-between"><span>Total profit (${quantityInput.value} units):</span><span class="font-medium total-profit">–</span></div>
              <div class="flex justify-between"><span>Margin:</span><span class="font-medium margin-result">–</span></div>
              <div class="flex justify-between"><span>Markup:</span><span class="font-medium markup-result">–</span></div>
              <div class="flex justify-between"><span>Break-even units:</span><span class="font-medium breakeven-units">–</span></div>
            </div>
          </div>
        </div>
      `;

          scenariosContainer.appendChild(card);
          scenarioCount++;
          attachScenarioEvents(card);
          updateAll();
        }

        function attachScenarioEvents(card) {
          const inputs = card.querySelectorAll("input, select");
          inputs.forEach((input) => {
            input.addEventListener("input", () => updateAll());
            input.addEventListener("change", () => updateAll());
          });
          const removeBtn = card.querySelector(".remove-scenario");
          removeBtn.addEventListener("click", () => {
            card.remove();
            scenarioCount--;
            updateAll();
          });
        }

        function getScenarioData(card) {
          const cost = parseNumber(card.querySelector(".cost-input"));
          const priceInput = card.querySelector(".price-input");
          const marginInput = card.querySelector(".margin-input");
          const markupInput = card.querySelector(".markup-input");
          const discount = parseNumber(card.querySelector(".discount-input"));
          const fees = parseNumber(card.querySelector(".fees-input"));
          const taxRate = parseNumber(card.querySelector(".tax-input"));
          const taxIncluded =
            card.querySelector(".tax-included-input").value === "yes";

          let price = 0;
          if (currentMode === "from-price") {
            price = parseNumber(priceInput);
          } else if (currentMode === "from-margin") {
            const m = parseNumber(marginInput) / 100;
            if (m < 1) {
              price = 1 - m !== 0 ? cost / (1 - m) : 0;
            }
          } else if (currentMode === "from-markup") {
            const k = parseNumber(markupInput) / 100;
            price = cost * (1 + k);
          }

          // Apply discount
          const discountFactor = 1 - discount / 100;
          let effectivePrice = price * discountFactor;

          // Handle tax
          const taxDecimal = taxRate / 100;
          if (taxIncluded && taxDecimal > 0) {
            // Remove tax from price to get net revenue
            effectivePrice = effectivePrice / (1 + taxDecimal);
          }
          // If tax is not included, we assume tax is passed through and not part of revenue

          // Subtract per-unit fees from effective price
          const netPrice = effectivePrice - fees;

          const unitProfit = netPrice - cost;
          const quantity = parseNumber(quantityInput);
          const fixedCosts = parseNumber(fixedCostsInput);

          const totalProfitBeforeFixed = unitProfit * quantity;
          const totalProfit = totalProfitBeforeFixed - fixedCosts;

          const revenuePerUnit = netPrice;
          const margin =
            revenuePerUnit > 0 ? (unitProfit / revenuePerUnit) * 100 : 0;
          const markup = cost > 0 ? (unitProfit / cost) * 100 : 0;

          let breakevenUnits = null;
          if (unitProfit > 0 && fixedCosts > 0) {
            breakevenUnits = fixedCosts / unitProfit;
          }

          return {
            cost,
            price,
            netPrice,
            unitProfit,
            totalProfit,
            margin,
            markup,
            breakevenUnits,
          };
        }

        function updateScenarioCard(card, data) {
          const unitProfitEl = card.querySelector(".unit-profit");
          const totalProfitEl = card.querySelector(".total-profit");
          const marginEl = card.querySelector(".margin-result");
          const markupEl = card.querySelector(".markup-result");
          const breakevenEl = card.querySelector(".breakeven-units");
          const quantity = parseNumber(quantityInput);

          if (
            !isFinite(data.unitProfit) ||
            (data.cost === 0 && data.price === 0)
          ) {
            unitProfitEl.textContent = "–";
            totalProfitEl.textContent = "–";
            marginEl.textContent = "–";
            markupEl.textContent = "–";
            breakevenEl.textContent = "–";
            return;
          }

          unitProfitEl.textContent = formatCurrency(data.unitProfit);
          totalProfitEl.textContent = formatCurrency(data.totalProfit);
          marginEl.textContent = formatPercent(data.margin);
          markupEl.textContent = formatPercent(data.markup);
          breakevenEl.textContent =
            data.breakevenUnits != null
              ? Math.ceil(data.breakevenUnits).toString()
              : "–";

          // Update label for total profit with quantity
          const totalLabel =
            card.querySelector(".total-profit").previousSibling;
          if (totalLabel && totalLabel.nodeType === Node.TEXT_NODE) {
            // no-op; label is static
          }
        }

        function updateSummary() {
          const cards = Array.from(
            scenariosContainer.querySelectorAll("[data-scenario-index]")
          );
          summaryTableBody.innerHTML = "";

          const rows = [];

          cards.forEach((card, idx) => {
            const data = getScenarioData(card);
            if (
              !isFinite(data.unitProfit) ||
              (data.cost === 0 && data.price === 0)
            )
              return;

            const labelInput = card.querySelector('input[type="text"]');
            const label =
              labelInput && labelInput.value.trim()
                ? labelInput.value.trim()
                : scenarioColors[idx].name;

            const row = document.createElement("tr");
            row.innerHTML = `
          <td class="px-3 py-2 whitespace-nowrap text-gray-700">${label}</td>
          <td class="px-3 py-2 text-right whitespace-nowrap">${formatCurrency(
            data.unitProfit
          )}</td>
          <td class="px-3 py-2 text-right whitespace-nowrap">${formatCurrency(
            data.totalProfit
          )}</td>
          <td class="px-3 py-2 text-right whitespace-nowrap">${formatPercent(
            data.margin
          )}</td>
          <td class="px-3 py-2 text-right whitespace-nowrap">${formatPercent(
            data.markup
          )}</td>
          <td class="px-3 py-2 text-right whitespace-nowrap">${
            data.breakevenUnits != null ? Math.ceil(data.breakevenUnits) : "–"
          }</td>
        `;
            rows.push({ row, totalProfit: data.totalProfit });
          });

          if (rows.length === 0) {
            summaryEmpty.classList.remove("hidden");
            summaryTableWrapper.classList.add("hidden");
            return;
          }

          // Highlight best profit
          let maxProfit = -Infinity;
          rows.forEach((r) => {
            if (r.totalProfit > maxProfit) maxProfit = r.totalProfit;
          });

          rows.forEach((r) => {
            if (r.totalProfit === maxProfit) {
              r.row.classList.add("bg-green-50");
            }
            summaryTableBody.appendChild(r.row);
          });

          summaryEmpty.classList.add("hidden");
          summaryTableWrapper.classList.remove("hidden");
        }

        function updateAll() {
          const cards = Array.from(
            scenariosContainer.querySelectorAll("[data-scenario-index]")
          );
          cards.forEach((card) => {
            const data = getScenarioData(card);
            updateScenarioCard(card, data);
          });
          updateSummary();
        }

        // Mode switching
        modeTabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            const mode = tab.dataset.mode;
            if (mode === currentMode) return;
            currentMode = mode;

            modeTabs.forEach((t) => {
              if (t.dataset.mode === mode) {
                t.classList.add("tab-active");
                t.classList.remove("text-gray-600");
                t.setAttribute("aria-selected", "true");
              } else {
                t.classList.remove("tab-active");
                t.classList.add("text-gray-600");
                t.setAttribute("aria-selected", "false");
              }
            });

            const cards = Array.from(
              scenariosContainer.querySelectorAll("[data-scenario-index]")
            );
            cards.forEach((card) => {
              card.querySelectorAll("[data-field-group]").forEach((group) => {
                if (group.getAttribute("data-field-group") === mode) {
                  group.classList.remove("hidden");
                } else {
                  group.classList.add("hidden");
                }
              });
            });

            updateAll();
          });
        });

        // Currency symbol sync
        currencyInput.addEventListener("input", () => {
          const symbol = currencyInput.value || "$";
          fixedCostsPrefix.textContent = symbol;
          document
            .querySelectorAll(".currency-prefix")
            .forEach((el) => (el.textContent = symbol));
          updateAll();
        });

        // Quantity & fixed costs change
        quantityInput.addEventListener("input", () => updateAll());
        fixedCostsInput.addEventListener("input", () => updateAll());

        // Add scenario button
        addBtn.addEventListener("click", () => {
          if (scenarioCount >= maxScenarios) return;
          createScenarioCard(scenarioCount);
        });

        // Reset scenarios
        resetBtn.addEventListener("click", () => {
          scenariosContainer.innerHTML = "";
          scenarioCount = 0;
          createScenarioCard(0);
          updateAll();
        });

        // Initialize with one scenario
        createScenarioCard(0);
      })();
    </script>

