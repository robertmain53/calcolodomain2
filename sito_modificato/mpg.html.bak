    <script>
      // Utility: format number with fixed decimals and trim trailing zeros
      function formatNumber(value, decimals) {
        if (!isFinite(value)) return "–";
        const fixed = value.toFixed(decimals);
        return fixed.replace(/\.?0+$/, "");
      }

      // Unit conversion helpers
      const MILE_TO_KM = 1.60934;
      const US_GAL_TO_L = 3.78541;
      const UK_GAL_TO_L = 4.54609;

      function toBaseDistance(distance, unit) {
        // base: miles
        return unit === "km" ? distance / MILE_TO_KM : distance;
      }

      function toBaseVolume(volume, unit) {
        // base: US gallons
        if (unit === "us_gallon") return volume;
        if (unit === "uk_gallon") return volume * (UK_GAL_TO_L / US_GAL_TO_L);
        // liters
        return volume / US_GAL_TO_L;
      }

      function mpgFromDistanceAndFuel(
        distance,
        distanceUnit,
        fuel,
        volumeUnit
      ) {
        const miles = toBaseDistance(distance, distanceUnit);
        const usGallons = toBaseVolume(fuel, volumeUnit);
        if (usGallons <= 0 || miles <= 0) return null;
        return miles / usGallons;
      }

      function convertFuelEconomyFromUSMpg(usMpg) {
        if (!usMpg || usMpg <= 0) return null;
        const milesPerLitre = usMpg / US_GAL_TO_L;
        const kmPerL = milesPerLitre * MILE_TO_KM;
        const lPer100km = 100 / kmPerL;
        const ukMpg = (kmPerL * 100) / (UK_GAL_TO_L / 1); // km per UK gallon
        return { usMpg, ukMpg, kmPerL, lPer100km };
      }

      function fuelEconomyFromKnown(value, unit) {
        if (!value || value <= 0) return null;
        let usMpg;
        switch (unit) {
          case "us_mpg":
            usMpg = value;
            break;
          case "uk_mpg": {
            // convert UK MPG -> km/L -> US MPG
            const kmPerL = (value * (UK_GAL_TO_L / 1)) / 100;
            usMpg = kmPerL * (US_GAL_TO_L / MILE_TO_KM);
            break;
          }
          case "km_per_l": {
            const kmPerL = value;
            usMpg = kmPerL * (US_GAL_TO_L / MILE_TO_KM);
            break;
          }
          case "l_per_100km": {
            const lPer100km = value;
            const kmPerL = 100 / lPer100km;
            usMpg = kmPerL * (US_GAL_TO_L / MILE_TO_KM);
            break;
          }
          default:
            return null;
        }
        return convertFuelEconomyFromUSMpg(usMpg);
      }

      function updateUnitLabels() {
        const distanceUnit = document.getElementById("distance-unit").value;
        const volumeUnit = document.getElementById("volume-unit").value;

        document.getElementById("distance-unit-label").textContent =
          distanceUnit === "miles" ? "miles" : "km";
        document.getElementById("trip-distance-unit-label").textContent =
          distanceUnit === "miles" ? "miles" : "km";
        document.getElementById("known-trip-distance-unit-label").textContent =
          distanceUnit === "miles" ? "miles" : "km";

        let volLabel;
        if (volumeUnit === "us_gallon") volLabel = "US gal";
        else if (volumeUnit === "uk_gallon") volLabel = "UK gal";
        else volLabel = "L";
        document.getElementById("volume-unit-label").textContent = volLabel;
      }

      function clearResults() {
        const ids = [
          "res-us-mpg",
          "res-uk-mpg",
          "res-km-per-l",
          "res-l-per-100km",
          "res-fuel-used",
          "res-cost-per-distance",
          "res-cost-per-100-distance",
          "res-trip",
        ];
        ids.forEach((id) => (document.getElementById(id).textContent = "–"));
        document.getElementById("results-summary").classList.add("hidden");
        document.getElementById("results-summary").textContent = "";
      }

      function showError(show, message) {
        const el = document.getElementById("error-message");
        if (show) {
          if (message) el.textContent = message;
          el.classList.remove("hidden");
        } else {
          el.classList.add("hidden");
        }
      }

      function handleModeSwitch(newMode) {
        const fillUp = document.getElementById("mode-fill-up");
        const known = document.getElementById("mode-known-mpg");
        const tabs = document.querySelectorAll(".mode-tab");

        if (newMode === "fill-up") {
          fillUp.classList.remove("hidden");
          known.classList.add("hidden");
        } else {
          fillUp.classList.add("hidden");
          known.classList.remove("hidden");
        }

        tabs.forEach((tab) => {
          if (tab.dataset.mode === newMode) {
            tab.classList.add("border-blue-600", "text-blue-600");
            tab.classList.remove("border-transparent", "text-gray-600");
          } else {
            tab.classList.remove("border-blue-600", "text-blue-600");
            tab.classList.add("border-transparent", "text-gray-600");
          }
        });

        clearResults();
        showError(false);
      }

      function calculate() {
        showError(false);
        clearResults();

        const distanceUnit = document.getElementById("distance-unit").value;
        const volumeUnit = document.getElementById("volume-unit").value;
        const activeMode = document
          .getElementById("mode-fill-up")
          .classList.contains("hidden")
          ? "known-mpg"
          : "fill-up";

        let fuelEco = null;
        let fuelUsedBase = null; // in input units
        let distanceUsed = null; // in input distance units
        let fuelPrice = null;
        let tripDistance = null;

        if (activeMode === "fill-up") {
          const distance = parseFloat(
            document.getElementById("distance").value
          );
          const fuelUsed = parseFloat(
            document.getElementById("fuel-used").value
          );
          fuelPrice = parseFloat(document.getElementById("fuel-price").value);
          tripDistance = parseFloat(
            document.getElementById("trip-distance").value
          );

          if (!(distance > 0) || !(fuelUsed > 0)) {
            showError(
              true,
              "Please enter positive values for distance and fuel used."
            );
            return;
          }

          const usMpg = mpgFromDistanceAndFuel(
            distance,
            distanceUnit,
            fuelUsed,
            volumeUnit
          );
          if (!usMpg) {
            showError(true, "Unable to compute MPG from the given values.");
            return;
          }
          fuelEco = convertFuelEconomyFromUSMpg(usMpg);
          fuelUsedBase = fuelUsed;
          distanceUsed = distance;
        } else {
          const knownValue = parseFloat(
            document.getElementById("known-mpg").value
          );
          const knownUnit = document.getElementById("known-mpg-unit").value;
          const dist = parseFloat(
            document.getElementById("known-trip-distance").value
          );
          fuelPrice = parseFloat(
            document.getElementById("known-fuel-price").value
          );

          if (!(knownValue > 0) || !(dist > 0)) {
            showError(
              true,
              "Please enter positive values for fuel economy and trip distance."
            );
            return;
          }

          fuelEco = fuelEconomyFromKnown(knownValue, knownUnit);
          if (!fuelEco) {
            showError(true, "Unable to interpret the given fuel economy.");
            return;
          }

          // For known MPG mode, we don't have a past fill-up, only a future trip
          fuelUsedBase = null;
          distanceUsed = null;
          tripDistance = dist;
        }

        if (!fuelEco) {
          showError(true, "Calculation error. Please check your inputs.");
          return;
        }

        // Display fuel economy
        document.getElementById("res-us-mpg").textContent =
          formatNumber(fuelEco.usMpg, 2) + " mpg (US)";
        document.getElementById("res-uk-mpg").textContent =
          formatNumber(fuelEco.ukMpg, 2) + " mpg (UK)";
        document.getElementById("res-km-per-l").textContent =
          formatNumber(fuelEco.kmPerL, 2) + " km/L";
        document.getElementById("res-l-per-100km").textContent =
          formatNumber(fuelEco.lPer100km, 2) + " L/100 km";

        // Fuel used (if we have a past fill-up)
        if (fuelUsedBase != null && distanceUsed != null) {
          const distLabel = distanceUnit === "miles" ? "mi" : "km";
          let volLabel;
          if (volumeUnit === "us_gallon") volLabel = "US gal";
          else if (volumeUnit === "uk_gallon") volLabel = "UK gal";
          else volLabel = "L";

          document.getElementById("res-fuel-used").textContent =
            formatNumber(fuelUsedBase, 2) +
            " " +
            volLabel +
            " for " +
            formatNumber(distanceUsed, 1) +
            " " +
            distLabel;
        } else {
          document.getElementById("res-fuel-used").textContent =
            "Based on known fuel economy";
        }

        // Cost metrics (if fuel price given)
        let summaryParts = [];
        const hasPrice = fuelPrice > 0;

        if (hasPrice) {
          // cost per unit distance in chosen distance unit
          let costPerDistance = null;
          if (
            activeMode === "fill-up" &&
            distanceUsed != null &&
            fuelUsedBase != null
          ) {
            const totalCost = fuelPrice * fuelUsedBase;
            costPerDistance = totalCost / distanceUsed;
          } else if (tripDistance != null) {
            // derive fuel needed for 1 distance unit
            if (distanceUnit === "miles") {
              const fuelPerMile = 1 / fuelEco.usMpg; // US gallons per mile
              // convert to input volume unit
              let factor = 1;
              if (volumeUnit === "uk_gallon")
                factor = US_GAL_TO_L / UK_GAL_TO_L;
              else if (volumeUnit === "liter") factor = US_GAL_TO_L;
              const fuelPerDistUnit = fuelPerMile * factor;
              costPerDistance = fuelPerDistUnit * fuelPrice;
            } else {
              // km: use km/L
              const fuelPerKmL = 1 / fuelEco.kmPerL; // liters per km
              let factor = 1;
              if (volumeUnit === "us_gallon") factor = 1 / US_GAL_TO_L;
              else if (volumeUnit === "uk_gallon") factor = 1 / UK_GAL_TO_L;
              const fuelPerDistUnit = fuelPerKmL * factor;
              costPerDistance = fuelPerDistUnit * fuelPrice;
            }
          }

          if (costPerDistance != null && isFinite(costPerDistance)) {
            const distLabel = distanceUnit === "miles" ? "mile" : "km";
            const costPer100 = costPerDistance * 100;
            document.getElementById("res-cost-per-distance").textContent =
              formatNumber(costPerDistance, 3) + " per " + distLabel;
            document.getElementById("res-cost-per-100-distance").textContent =
              formatNumber(costPer100, 2) +
              " per 100 " +
              (distanceUnit === "miles" ? "miles" : "km");
            summaryParts.push(
              "Your fuel costs about " +
                formatNumber(costPerDistance, 3) +
                " per " +
                distLabel +
                "."
            );
          } else {
            document.getElementById("res-cost-per-distance").textContent = "–";
            document.getElementById("res-cost-per-100-distance").textContent =
              "–";
          }
        } else {
          document.getElementById("res-cost-per-distance").textContent =
            "Enter fuel price to see cost per mile/km";
          document.getElementById("res-cost-per-100-distance").textContent =
            "Enter fuel price to see cost per 100 miles/km";
        }

        // Trip fuel & cost
        if (tripDistance && tripDistance > 0) {
          const distLabelShort = distanceUnit === "miles" ? "mi" : "km";

          let fuelNeededInInputUnits;
          if (distanceUnit === "miles") {
            const fuelPerMileUSGal = 1 / fuelEco.usMpg;
            let factor = 1;
            if (volumeUnit === "uk_gallon") factor = US_GAL_TO_L / UK_GAL_TO_L;
            else if (volumeUnit === "liter") factor = US_GAL_TO_L;
            fuelNeededInInputUnits = tripDistance * fuelPerMileUSGal * factor;
          } else {
            const fuelPerKmL = 1 / fuelEco.kmPerL; // liters per km
            let factor = 1;
            if (volumeUnit === "us_gallon") factor = 1 / US_GAL_TO_L;
            else if (volumeUnit === "uk_gallon") factor = 1 / UK_GAL_TO_L;
            fuelNeededInInputUnits = tripDistance * fuelPerKmL * factor;
          }

          let volLabel;
          if (volumeUnit === "us_gallon") volLabel = "US gal";
          else if (volumeUnit === "uk_gallon") volLabel = "UK gal";
          else volLabel = "L";

          let text =
            formatNumber(fuelNeededInInputUnits, 2) +
            " " +
            volLabel +
            " for " +
            formatNumber(tripDistance, 1) +
            " " +
            distLabelShort;

          if (hasPrice) {
            const tripCost = fuelNeededInInputUnits * fuelPrice;
            text += " (" + formatNumber(tripCost, 2) + " total cost)";
            summaryParts.push(
              "A " +
                formatNumber(tripDistance, 1) +
                " " +
                distLabelShort +
                " trip will use about " +
                formatNumber(fuelNeededInInputUnits, 2) +
                " " +
                volLabel +
                " and cost roughly " +
                formatNumber(tripCost, 2) +
                "."
            );
          }

          document.getElementById("res-trip").textContent = text;
        } else {
          document.getElementById("res-trip").textContent =
            "Enter a trip distance to estimate fuel and cost.";
        }

        if (summaryParts.length > 0) {
          const summary = document.getElementById("results-summary");
          summary.textContent = summaryParts.join(" ");
          summary.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateUnitLabels();
        clearResults();

        document
          .getElementById("distance-unit")
          .addEventListener("change", function () {
            updateUnitLabels();
            clearResults();
          });
        document
          .getElementById("volume-unit")
          .addEventListener("change", function () {
            updateUnitLabels();
            clearResults();
          });

        document.querySelectorAll(".mode-tab").forEach((tab) => {
          tab.addEventListener("click", () =>
            handleModeSwitch(tab.dataset.mode)
          );
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculate);

        document
          .getElementById("reset-btn")
          .addEventListener("click", function () {
            [
              "distance",
              "fuel-used",
              "fuel-price",
              "trip-distance",
              "known-mpg",
              "known-trip-distance",
              "known-fuel-price",
            ].forEach((id) => {
              const el = document.getElementById(id);
              if (el) el.value = "";
            });
            showError(false);
            clearResults();
          });
      });
    </script>

