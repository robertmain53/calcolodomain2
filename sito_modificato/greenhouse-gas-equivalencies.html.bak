    <script>
      // Tab switching
      const tabFromCO2 = document.getElementById("tab-from-co2");
      const tabFromActivity = document.getElementById("tab-from-activity");
      const panelFromCO2 = document.getElementById("panel-from-co2");
      const panelFromActivity = document.getElementById("panel-from-activity");

      function setActiveTab(tab) {
        if (tab === "co2") {
          tabFromCO2.classList.add("border-blue-600", "text-blue-600");
          tabFromCO2.classList.remove("border-transparent", "text-gray-500");
          tabFromActivity.classList.remove("border-blue-600", "text-blue-600");
          tabFromActivity.classList.add("border-transparent", "text-gray-500");
          panelFromCO2.classList.remove("hidden");
          panelFromActivity.classList.add("hidden");
        } else {
          tabFromActivity.classList.add("border-blue-600", "text-blue-600");
          tabFromActivity.classList.remove(
            "border-transparent",
            "text-gray-500"
          );
          tabFromCO2.classList.remove("border-blue-600", "text-blue-600");
          tabFromCO2.classList.add("border-transparent", "text-gray-500");
          panelFromActivity.classList.remove("hidden");
          panelFromCO2.classList.add("hidden");
        }
      }

      tabFromCO2.addEventListener("click", () => setActiveTab("co2"));
      tabFromActivity.addEventListener("click", () => setActiveTab("activity"));

      // Core factors (approximate, educational)
      const factors = {
        // Equivalencies per tCO2e
        milesPerT: 1000 / 0.404, // miles per tCO2e
        kmPerT: (1000 / 0.404) * 1.609, // km per tCO2e
        gallonsPerT: 1000 / 8.89, // US gallons gasoline per tCO2e
        litersGasPerT: (1000 / 8.89) * 3.785,
        kwhPerT: 1000 / 0.45, // kWh per tCO2e
        smartphoneChargesPerT: 1000 / 0.005,
        treesPerT: 1 / 0.021, // trees per tCO2e (10-year growth)
        homesElectricityPerT: 1000 / 0.45 / 4000, // homes' annual electricity per tCO2e

        // Activity emission factors
        carKgPerMile: 0.404,
        carKgPerKm: 0.251,
        gridKgPerKwh: 0.45,
        shortHaulTPerFlight: 0.3,
        longHaulTPerFlight: 1.0,
        beefKgPerKg: 27,
        beefKgPerLb: 27 / 0.453592,
        gasKgPerGal: 8.89,
        gasKgPerL: 2.35,
        natGasKgPerTherm: 5.3,
        natGasKgPerM3: 2.0,
      };

      function toTonsFromInput(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v) || v < 0) return 0;
        switch (unit) {
          case "tco2e":
            return v;
          case "kgco2e":
            return v / 1000;
          case "lbco2e":
            return v / 2204.62;
          default:
            return v;
        }
      }

      function formatNumber(x, decimals = 2) {
        if (!isFinite(x)) return "0";
        if (x === 0) return "0";
        const abs = Math.abs(x);
        if (abs >= 1000000) {
          return x.toExponential(2);
        }
        if (abs < 0.01 && abs > 0) {
          return x.toExponential(2);
        }
        return x.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: 0,
        });
      }

      function buildEquivalencyCards(tCO2e) {
        const miles = tCO2e * factors.milesPerT;
        const km = tCO2e * factors.kmPerT;
        const gallons = tCO2e * factors.gallonsPerT;
        const litersGas = tCO2e * factors.litersGasPerT;
        const kwh = tCO2e * factors.kwhPerT;
        const charges = tCO2e * factors.smartphoneChargesPerT;
        const trees = tCO2e * factors.treesPerT;
        const homes = tCO2e * factors.homesElectricityPerT;

        return [
          {
            label: "Miles driven by an average gasoline car",
            value: `${formatNumber(miles, 1)} miles`,
            note: `≈ ${formatNumber(km, 1)} km`,
          },
          {
            label: "Gallons of gasoline burned",
            value: `${formatNumber(gallons, 1)} US gal`,
            note: `≈ ${formatNumber(litersGas, 1)} liters`,
          },
          {
            label: "kWh of grid electricity used",
            value: `${formatNumber(kwh, 0)} kWh`,
            note: "Global-average grid mix",
          },
          {
            label: "Smartphones charged",
            value: `${formatNumber(charges, 0)} charges`,
            note: "Assuming one full charge per use",
          },
          {
            label: "Tree seedlings grown for 10 years",
            value: `${formatNumber(trees, 1)} trees`,
            note: "Approximate CO₂ sequestration",
          },
          {
            label: "Homes' annual electricity use",
            value: `${formatNumber(homes, 2)} homes`,
            note: "Based on ~4,000 kWh/home/year",
          },
        ];
      }

      function renderCards(container, cards) {
        container.innerHTML = "";
        cards.forEach((card) => {
          const div = document.createElement("div");
          div.className = "result-card";
          div.innerHTML = `
        <div class="result-label">${card.label}</div>
        <div class="result-value">${card.value}</div>
        ${card.note ? `<div class="result-note">${card.note}</div>` : ""}
      `;
          container.appendChild(div);
        });
      }

      // From CO2e handler
      document.getElementById("btn-calc-co2").addEventListener("click", () => {
        const value = document.getElementById("co2-value").value;
        const unit = document.getElementById("co2-unit").value;
        const tCO2e = toTonsFromInput(value, unit);
        const resultsContainer = document.getElementById("results-co2");

        if (!tCO2e || tCO2e <= 0) {
          resultsContainer.innerHTML =
            '<p class="text-sm text-gray-500">Enter a positive emissions value to see equivalencies.</p>';
          return;
        }

        const cards = buildEquivalencyCards(tCO2e);
        renderCards(resultsContainer, cards);
      });

      // Initial calculation
      document.getElementById("btn-calc-co2").click();

      // From activity handler
      document
        .getElementById("btn-calc-activity")
        .addEventListener("click", () => {
          let totalKg = 0;

          // Car travel
          const milesVal = parseFloat(
            document.getElementById("act-miles").value
          );
          const milesUnit = document.getElementById("act-miles-unit").value;
          if (!isNaN(milesVal) && milesVal > 0) {
            if (milesUnit === "miles") {
              totalKg += milesVal * factors.carKgPerMile;
            } else {
              totalKg += milesVal * factors.carKgPerKm;
            }
          }

          // Electricity
          const kwhVal = parseFloat(document.getElementById("act-kwh").value);
          if (!isNaN(kwhVal) && kwhVal > 0) {
            totalKg += kwhVal * factors.gridKgPerKwh;
          }

          // Flights
          const flightsVal = parseFloat(
            document.getElementById("act-flights").value
          );
          const flightsType = document.getElementById("act-flights-type").value;
          if (!isNaN(flightsVal) && flightsVal > 0) {
            const tPerFlight =
              flightsType === "short"
                ? factors.shortHaulTPerFlight
                : factors.longHaulTPerFlight;
            totalKg += flightsVal * tPerFlight * 1000;
          }

          // Beef
          const beefVal = parseFloat(document.getElementById("act-beef").value);
          const beefUnit = document.getElementById("act-beef-unit").value;
          if (!isNaN(beefVal) && beefVal > 0) {
            if (beefUnit === "kg") {
              totalKg += beefVal * factors.beefKgPerKg;
            } else {
              totalKg += beefVal * factors.beefKgPerLb;
            }
          }

          // Gasoline
          const gasVal = parseFloat(document.getElementById("act-gas").value);
          const gasUnit = document.getElementById("act-gas-unit").value;
          if (!isNaN(gasVal) && gasVal > 0) {
            if (gasUnit === "gal") {
              totalKg += gasVal * factors.gasKgPerGal;
            } else {
              totalKg += gasVal * factors.gasKgPerL;
            }
          }

          // Natural gas
          const natGasVal = parseFloat(
            document.getElementById("act-natgas").value
          );
          const natGasUnit = document.getElementById("act-natgas-unit").value;
          if (!isNaN(natGasVal) && natGasVal > 0) {
            if (natGasUnit === "therm") {
              totalKg += natGasVal * factors.natGasKgPerTherm;
            } else {
              totalKg += natGasVal * factors.natGasKgPerM3;
            }
          }

          const resultsContainer = document.getElementById("results-activity");
          const summary = document.getElementById("summary-activity");
          const summaryValue = document.getElementById(
            "summary-activity-value"
          );

          if (!totalKg || totalKg <= 0) {
            resultsContainer.innerHTML =
              '<p class="text-sm text-gray-500">Enter at least one activity value to estimate emissions.</p>';
            summary.classList.add("hidden");
            return;
          }

          const tCO2e = totalKg / 1000;
          summaryValue.textContent = `${formatNumber(
            tCO2e,
            3
          )} metric tons CO₂e (≈ ${formatNumber(totalKg, 1)} kg)`;
          summary.classList.remove("hidden");

          const cards = buildEquivalencyCards(tCO2e);
          renderCards(resultsContainer, cards);
        });

      // Mobile menu script (simple)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const isHidden = mobileMenu.classList.contains("hidden");
          mobileMenu.classList.toggle("hidden", !isHidden);
          mobileToggle.setAttribute(
            "aria-expanded",
            isHidden ? "true" : "false"
          );
        });
      }

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
