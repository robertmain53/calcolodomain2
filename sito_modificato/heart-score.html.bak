    <script>
      // HEART score calculator logic
      function getRadioValue(name) {
        const el = document.querySelector('input[name="' + name + '"]:checked');
        return el ? parseInt(el.value, 10) : 0;
      }

      function computeTroponinPoints() {
        const categorySelect = document.getElementById("trop-category");
        const helper = document.getElementById("trop-helper");
        const mode = categorySelect.value;

        if (mode !== "auto") {
          helper.textContent = "";
          return parseInt(mode, 10);
        }

        const value = parseFloat(document.getElementById("trop-value").value);
        const url = parseFloat(document.getElementById("trop-url").value);

        if (isNaN(value) || isNaN(url) || url <= 0) {
          helper.textContent =
            "Enter troponin and URL, or choose a category manually.";
          return 0;
        }

        const ratio = value / url;
        let points = 0;
        if (ratio <= 1) {
          points = 0;
          helper.textContent = "Troponin is within normal range (≤ URL).";
        } else if (ratio <= 3) {
          points = 1;
          helper.textContent = "Troponin is between 1× and 3× the URL.";
        } else {
          points = 2;
          helper.textContent = "Troponin is > 3× the URL.";
        }
        return points;
      }

      function interpretHeartScore(score) {
        if (score <= 3) {
          return {
            category: "Low risk",
            mace: "~1–2%",
            badgeClass: "bg-green-100 text-green-800",
            advice:
              "Low‑risk patients (HEART 0–3) often qualify for early discharge with outpatient follow‑up if serial ECGs and troponins are normal and there are no concerning features. Follow your local chest pain protocol.",
          };
        } else if (score <= 6) {
          return {
            category: "Intermediate risk",
            mace: "~12–17%",
            badgeClass: "bg-yellow-100 text-yellow-800",
            advice:
              "Intermediate‑risk patients (HEART 4–6) usually require observation, serial ECGs and troponins, and consideration of non‑invasive testing or cardiology consultation.",
          };
        } else {
          return {
            category: "High risk",
            mace: "~50–65%",
            badgeClass: "bg-red-100 text-red-800",
            advice:
              "High‑risk patients (HEART 7–10) warrant urgent or emergent cardiology evaluation and aggressive management according to acute coronary syndrome protocols.",
          };
        }
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", function () {
          const H = getRadioValue("history");
          const E = getRadioValue("ecg");
          const A = getRadioValue("age");
          const R = getRadioValue("risk");
          const T = computeTroponinPoints();

          const total = H + E + A + R + T;

          const resultSection = document.getElementById("results-section");
          resultSection.classList.remove("hidden");

          document.getElementById("heart-score-output").textContent = total;

          const interp = interpretHeartScore(total);
          document.getElementById("risk-category").textContent =
            interp.category;
          document.getElementById("mace-risk").textContent = interp.mace;

          const badge = document.getElementById("risk-badge");
          badge.className =
            "inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold " +
            interp.badgeClass;
          badge.textContent =
            interp.category +
            " – " +
            (total <= 3
              ? "early discharge may be considered in appropriate patients"
              : total <= 6
              ? "observation and further testing usually required"
              : "urgent cardiology evaluation recommended");

          document.getElementById("management-advice").textContent =
            interp.advice;

          const breakdown = document.getElementById("component-breakdown");
          breakdown.innerHTML =
            "<p><strong>History (H):</strong> " +
            H +
            " point(s)</p>" +
            "<p><strong>ECG (E):</strong> " +
            E +
            " point(s)</p>" +
            "<p><strong>Age (A):</strong> " +
            A +
            " point(s)</p>" +
            "<p><strong>Risk factors (R):</strong> " +
            R +
            " point(s)</p>" +
            "<p><strong>Troponin (T):</strong> " +
            T +
            " point(s)</p>";
        });

      document
        .getElementById("reset-btn")
        .addEventListener("click", function () {
          document.getElementById("heart-form").reset();
          document.getElementById("trop-helper").textContent = "";
          document.getElementById("results-section").classList.add("hidden");
        });

      // Mobile menu script safeguard (if not already handled in external script)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
