    <script>
      // Simple tab switching
      const tabIncome = document.getElementById("tab-income");
      const tabSales = document.getElementById("tab-sales");
      const panelIncome = document.getElementById("panel-income");
      const panelSales = document.getElementById("panel-sales");

      tabIncome.addEventListener("click", () => {
        tabIncome.classList.add("border-blue-600", "text-blue-600");
        tabIncome.classList.remove("border-transparent", "text-gray-600");
        tabSales.classList.remove("border-blue-600", "text-blue-600");
        tabSales.classList.add("border-transparent", "text-gray-600");
        panelIncome.classList.remove("hidden");
        panelSales.classList.add("hidden");
      });

      tabSales.addEventListener("click", () => {
        tabSales.classList.add("border-blue-600", "text-blue-600");
        tabSales.classList.remove("border-transparent", "text-gray-600");
        tabIncome.classList.remove("border-blue-600", "text-blue-600");
        tabIncome.classList.add("border-transparent", "text-gray-600");
        panelSales.classList.remove("hidden");
        panelIncome.classList.add("hidden");
      });

      // Utility: format currency
      function fmtMoney(value) {
        if (!isFinite(value)) return "$0";
        return "$" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function fmtPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      // Apply progressive tax
      function applyBrackets(income, brackets) {
        let remaining = income;
        let tax = 0;
        const details = [];
        for (const b of brackets) {
          if (remaining <= 0) break;
          const upper =
            b.limit === null
              ? remaining
              : Math.min(remaining, b.limit - b.start);
          const taxed = upper > 0 ? upper : 0;
          const t = taxed * b.rate;
          tax += t;
          details.push({
            label: `${fmtMoney(b.start)} – ${
              b.limit === null ? "∞" : fmtMoney(b.limit)
            } @ ${(b.rate * 100).toFixed(1)}%`,
            amount: t,
          });
          remaining -= taxed;
        }
        return { tax, details };
      }

      // Approximate 2025 federal and Quebec brackets & basic amounts (illustrative)
      const FED_BRACKETS_2025 = [
        { start: 0, limit: 55867, rate: 0.15 },
        { start: 55867, limit: 111733, rate: 0.205 },
        { start: 111733, limit: 173205, rate: 0.26 },
        { start: 173205, limit: 246752, rate: 0.29 },
        { start: 246752, limit: null, rate: 0.33 },
      ];
      const QC_BRACKETS_2025 = [
        { start: 0, limit: 51780, rate: 0.15 },
        { start: 51780, limit: 103545, rate: 0.2 },
        { start: 103545, limit: 126000, rate: 0.24 },
        { start: 126000, limit: null, rate: 0.2575 },
      ];

      const FED_BASIC_AMOUNT_2025 = 15805; // approx
      const QC_BASIC_AMOUNT_2025 = 18415; // approx

      function calculateIncomeTax() {
        const income =
          parseFloat(document.getElementById("qc-income").value) || 0;
        const rrsp = parseFloat(document.getElementById("qc-rrsp").value) || 0;
        const otherDed =
          parseFloat(document.getElementById("qc-other-deductions").value) || 0;
        const extraCredits =
          parseFloat(document.getElementById("qc-nonref-credits").value) || 0;

        const taxable = Math.max(0, income - rrsp - otherDed);

        const fed = applyBrackets(taxable, FED_BRACKETS_2025);
        const qc = applyBrackets(taxable, QC_BRACKETS_2025);

        const fedBasicCredit = FED_BASIC_AMOUNT_2025 * 0.15;
        const qcBasicCredit = QC_BASIC_AMOUNT_2025 * 0.15; // use lowest rate approx

        const fedCredits = fedBasicCredit + extraCredits * 0.15;
        const qcCredits = qcBasicCredit + extraCredits * 0.15;

        const fedNet = Math.max(0, fed.tax - fedCredits);
        const qcNet = Math.max(0, qc.tax - qcCredits);
        const totalTax = fedNet + qcNet;
        const netIncome = income - totalTax;
        const effRate = income > 0 ? totalTax / income : 0;

        document.getElementById("qc-net-income").textContent =
          fmtMoney(netIncome);
        document.getElementById("qc-total-tax").textContent =
          fmtMoney(totalTax);
        document.getElementById("qc-effective-rate").textContent =
          fmtPercent(effRate);

        document.getElementById("qc-fed-gross").textContent = fmtMoney(fed.tax);
        document.getElementById("qc-fed-credits").textContent =
          "-" + fmtMoney(fedCredits);
        document.getElementById("qc-fed-net").textContent = fmtMoney(fedNet);

        document.getElementById("qc-prov-gross").textContent = fmtMoney(qc.tax);
        document.getElementById("qc-prov-credits").textContent =
          "-" + fmtMoney(qcCredits);
        document.getElementById("qc-prov-net").textContent = fmtMoney(qcNet);

        const showDetails = document.getElementById("qc-show-details").checked;
        const detailsDiv = document.getElementById("qc-bracket-details");
        if (showDetails) {
          detailsDiv.classList.remove("hidden");
          const fedList = document.getElementById("qc-fed-brackets");
          const qcList = document.getElementById("qc-prov-brackets");
          fedList.innerHTML = "";
          qcList.innerHTML = "";
          fed.details.forEach((d) => {
            const li = document.createElement("li");
            li.textContent = `${d.label}: ${fmtMoney(d.amount)}`;
            fedList.appendChild(li);
          });
          qc.details.forEach((d) => {
            const li = document.createElement("li");
            li.textContent = `${d.label}: ${fmtMoney(d.amount)}`;
            qcList.appendChild(li);
          });
        } else {
          detailsDiv.classList.add("hidden");
        }
      }

      document
        .getElementById("qc-income-calc")
        .addEventListener("click", calculateIncomeTax);
      document
        .getElementById("qc-show-details")
        .addEventListener("change", calculateIncomeTax);

      // Sales tax calculator
      function calculateSalesTax() {
        const price =
          parseFloat(document.getElementById("qc-price").value) || 0;
        const type = document.getElementById("qc-price-type").value;
        const gstRate =
          (parseFloat(document.getElementById("qc-gst-rate").value) || 0) / 100;
        const qstEnabled = document.getElementById("qc-apply-qst").checked;
        const qstRate = qstEnabled
          ? (parseFloat(document.getElementById("qc-qst-rate").value) || 0) /
            100
          : 0;

        let before, gst, qst, total;

        if (type === "before") {
          before = price;
          gst = before * gstRate;
          qst = before * qstRate;
          total = before + gst + qst;
        } else {
          total = price;
          const combined = 1 + gstRate + qstRate;
          before = combined > 0 ? total / combined : total;
          gst = before * gstRate;
          qst = before * qstRate;
        }

        document.getElementById("qc-sales-before").textContent =
          fmtMoney(before);
        document.getElementById("qc-sales-gst").textContent = fmtMoney(gst);
        document.getElementById("qc-sales-qst").textContent = fmtMoney(qst);
        document.getElementById("qc-sales-total").textContent = fmtMoney(total);
      }

      document
        .getElementById("qc-sales-calc")
        .addEventListener("click", calculateSalesTax);

      // Initial calculations on load
      calculateIncomeTax();
      calculateSalesTax;

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
