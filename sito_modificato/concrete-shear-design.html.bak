    <script>
      // Utility: update units when system changes
      function updateUnits() {
        const system = document.getElementById("unitSystem").value;
        if (system === "us") {
          document.getElementById("VuUnit").textContent = "(kips)";
          document.getElementById("fcUnit").textContent = "(ksi)";
          document.getElementById("fyUnit").textContent = "(ksi)";
          document.getElementById("bwUnit").textContent = "(in)";
          document.getElementById("dUnit").textContent = "(in)";
          document.getElementById("AvUnit").textContent = "(in²)";
          document.getElementById("sUnit").textContent = "(in)";
          document.getElementById("VcUnitLabel").innerHTML =
            "V<sub>c</sub> (kips)";
          document.getElementById("VsUnitLabel").innerHTML =
            "V<sub>s</sub> (kips)";
          document.getElementById("phiVnUnitLabel").innerHTML =
            "φV<sub>n</sub> (kips)";
        } else {
          document.getElementById("VuUnit").textContent = "(kN)";
          document.getElementById("fcUnit").textContent = "(MPa)";
          document.getElementById("fyUnit").textContent = "(MPa)";
          document.getElementById("bwUnit").textContent = "(mm)";
          document.getElementById("dUnit").textContent = "(mm)";
          document.getElementById("AvUnit").textContent = "(mm²)";
          document.getElementById("sUnit").textContent = "(mm)";
          document.getElementById("VcUnitLabel").innerHTML =
            "V<sub>c</sub> (kN)";
          document.getElementById("VsUnitLabel").innerHTML =
            "V<sub>s</sub> (kN)";
          document.getElementById("phiVnUnitLabel").innerHTML =
            "φV<sub>n</sub> (kN)";
        }
      }

      document
        .getElementById("unitSystem")
        .addEventListener("change", updateUnits);
      updateUnits();

      document
        .getElementById("shearReinfType")
        .addEventListener("change", function () {
          const type = this.value;
          const disabled = type === "min";
          document.getElementById("Av").disabled = disabled;
          document.getElementById("s").disabled = disabled;
          if (disabled) {
            document.getElementById("Av").classList.add("bg-gray-100");
            document.getElementById("s").classList.add("bg-gray-100");
          } else {
            document.getElementById("Av").classList.remove("bg-gray-100");
            document.getElementById("s").classList.remove("bg-gray-100");
          }
        });
      // initialize
      document
        .getElementById("shearReinfType")
        .dispatchEvent(new Event("change"));

      function parsePositive(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isFinite(v) && v > 0 ? v : null;
      }

      function calculateShear() {
        const status = document.getElementById("statusMessage");
        status.textContent = "";
        const system = document.getElementById("unitSystem").value;
        const type = document.getElementById("shearReinfType").value;

        const Vu = parsePositive("Vu");
        const fc = parsePositive("fc");
        const fy = parsePositive("fy");
        const bw = parsePositive("bw");
        const d = parsePositive("d");
        const lambda = parsePositive("lambdaFactor");
        const phi = parseFloat(document.getElementById("phiShear").value);

        if (!Vu || !fc || !fy || !bw || !d || !lambda || !phi) {
          status.textContent = "Please enter all required positive values.";
          return;
        }

        let Av = null,
          s = null;
        if (type === "designed") {
          Av = parsePositive("Av");
          s = parsePositive("s");
          if (!Av || !s) {
            status.textContent = "Enter valid Aᵥ and s for designed stirrups.";
            return;
          }
        }

        // Concrete shear Vc
        let Vc;
        if (system === "us") {
          // Vc in kips: 2 λ √fc * bw * d / 1000
          Vc = (2.0 * lambda * Math.sqrt(fc) * bw * d) / 1000.0;
        } else {
          // SI: Vc in kN: 0.17 λ √fc * bw * d / 1000
          Vc = (0.17 * lambda * Math.sqrt(fc) * bw * d) / 1000.0;
        }

        // Shear reinforcement Vs
        let Vs = 0;
        if (type === "designed") {
          if (system === "us") {
            // Av in in², fy in ksi, d in in, s in in → Vs in kips
            Vs = (Av * fy * d) / s / 1000.0;
          } else {
            // Av in mm², fy in MPa, d in mm, s in mm → Vs in kN
            // 1 MPa = 1 N/mm², so Av*fy*d/s = N; /1000 → kN
            Vs = (Av * fy * d) / s / 1000.0;
          }
        }

        const Vn = Vc + Vs;
        const phiVn = phi * Vn;
        const utilization = Vu / phiVn;

        // Update displays
        const decimals = 2;
        document.getElementById("VcDisplay").textContent = Vc.toFixed(decimals);
        document.getElementById("VsDisplay").textContent = Vs.toFixed(decimals);
        document.getElementById("phiVnDisplay").textContent =
          phiVn.toFixed(decimals);
        document.getElementById("utilizationDisplay").textContent =
          utilization.toFixed(2);

        const badge = document.getElementById("statusBadge");
        const box = document.getElementById("utilizationBox");

        badge.className =
          "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium";
        box.className = "p-3 rounded-md border";

        if (utilization <= 1.0) {
          badge.textContent = "OK – shear capacity adequate";
          badge.classList.add("bg-green-100", "text-green-800");
          box.classList.add("border-green-300", "bg-green-50");
        } else {
          badge.textContent = "NG – increase shear capacity";
          badge.classList.add("bg-red-100", "text-red-800");
          box.classList.add("border-red-300", "bg-red-50");
        }

        // Step-by-step text
        const step = [];
        const unitShear = system === "us" ? "kips" : "kN";
        const unitFc = system === "us" ? "ksi" : "MPa";
        const unitLen = system === "us" ? "in" : "mm";

        step.push(`<p><strong>1. Input summary</strong></p>`);
        step.push(`<ul>
      <li>V<sub>u</sub> = ${Vu.toFixed(decimals)} ${unitShear}</li>
      <li>f'<sub>c</sub> = ${fc.toFixed(
        2
      )} ${unitFc}, f<sub>y</sub> = ${fy.toFixed(0)} ${unitFc}</li>
      <li>b<sub>w</sub> = ${bw.toFixed(2)} ${unitLen}, d = ${d.toFixed(
          2
        )} ${unitLen}</li>
      <li>λ = ${lambda.toFixed(2)}, φ = ${phi.toFixed(2)}</li>
      ${
        type === "designed"
          ? `<li>A<sub>v</sub> = ${Av.toFixed(4)} ${
              system === "us" ? "in²" : "mm²"
            }, s = ${s.toFixed(2)} ${unitLen}</li>`
          : "<li>Shear reinforcement: minimum (no Vs added in this simplified check)</li>"
      }
    </ul>`);

        step.push(
          `<p><strong>2. Concrete shear strength V<sub>c</sub></strong></p>`
        );
        if (system === "us") {
          step.push(
            `<p>V<sub>c</sub> = 2 λ √f'<sub>c</sub> · b<sub>w</sub> · d / 1000 = 2 × ${lambda.toFixed(
              2
            )} × √${fc.toFixed(2)} × ${bw.toFixed(2)} × ${d.toFixed(
              2
            )} / 1000 = <strong>${Vc.toFixed(
              decimals
            )} ${unitShear}</strong></p>`
          );
        } else {
          step.push(
            `<p>V<sub>c</sub> = 0.17 λ √f'<sub>c</sub> · b<sub>w</sub> · d / 1000 = 0.17 × ${lambda.toFixed(
              2
            )} × √${fc.toFixed(2)} × ${bw.toFixed(2)} × ${d.toFixed(
              2
            )} / 1000 = <strong>${Vc.toFixed(
              decimals
            )} ${unitShear}</strong></p>`
          );
        }

        step.push(
          `<p><strong>3. Shear reinforcement strength V<sub>s</sub></strong></p>`
        );
        if (type === "designed") {
          step.push(
            `<p>V<sub>s</sub> = A<sub>v</sub> f<sub>y</sub> d / s = ${Av.toFixed(
              4
            )} × ${fy.toFixed(0)} × ${d.toFixed(2)} / ${s.toFixed(
              2
            )} / 1000 = <strong>${Vs.toFixed(
              decimals
            )} ${unitShear}</strong></p>`
          );
        } else {
          step.push(
            `<p>No designed stirrups specified in this simplified check, so V<sub>s</sub> = 0 ${unitShear}.</p>`
          );
        }

        step.push(
          `<p><strong>4. Nominal and design shear strength</strong></p>`
        );
        step.push(
          `<p>V<sub>n</sub> = V<sub>c</sub> + V<sub>s</sub> = ${Vc.toFixed(
            decimals
          )} + ${Vs.toFixed(decimals)} = <strong>${Vn.toFixed(
            decimals
          )} ${unitShear}</strong></p>`
        );
        step.push(
          `<p>φV<sub>n</sub> = φ · V<sub>n</sub> = ${phi.toFixed(
            2
          )} × ${Vn.toFixed(decimals)} = <strong>${phiVn.toFixed(
            decimals
          )} ${unitShear}</strong></p>`
        );

        step.push(`<p><strong>5. Design check</strong></p>`);
        step.push(
          `<p>V<sub>u</sub> / φV<sub>n</sub> = ${Vu.toFixed(
            decimals
          )} / ${phiVn.toFixed(decimals)} = <strong>${utilization.toFixed(
            2
          )}</strong></p>`
        );
        if (utilization <= 1.0) {
          step.push(
            `<p class="text-green-700">Since V<sub>u</sub> ≤ φV<sub>n</sub>, the section is <strong>adequate in shear</strong> for the given inputs.</p>`
          );
        } else {
          step.push(
            `<p class="text-red-700">Since V<sub>u</sub> &gt; φV<sub>n</sub>, the section is <strong>not adequate in shear</strong>. Increase b<sub>w</sub>, d, f'<sub>c</sub>, or provide more shear reinforcement (larger A<sub>v</sub> or smaller s).</p>`
          );
        }

        document.getElementById("stepByStep").innerHTML = step.join("");
      }

      document
        .getElementById("calcButton")
        .addEventListener("click", calculateShear);

      document
        .getElementById("resetButton")
        .addEventListener("click", function () {
          [
            "Vu",
            "fc",
            "fy",
            "bw",
            "d",
            "Av",
            "s",
            "lambdaFactor",
            "phiShear",
          ].forEach((id) => {
            const el = document.getElementById(id);
            if (!el) return;
            if (id === "lambdaFactor") el.value = 1.0;
            else if (id === "phiShear") el.value = 0.75;
            else el.value = "";
          });
          document.getElementById("VcDisplay").textContent = "–";
          document.getElementById("VsDisplay").textContent = "–";
          document.getElementById("phiVnDisplay").textContent = "–";
          document.getElementById("utilizationDisplay").textContent = "–";
          document.getElementById("stepByStep").innerHTML = "";
          document.getElementById("statusMessage").textContent = "";
          const badge = document.getElementById("statusBadge");
          const box = document.getElementById("utilizationBox");
          badge.textContent = "Waiting for input";
          badge.className =
            "inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-700";
          box.className = "p-3 rounded-md border";
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
