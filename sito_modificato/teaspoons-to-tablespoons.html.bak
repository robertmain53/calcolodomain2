        function convertTspToTbsp() {
            const tspInput = document.getElementById('tspInput').value;
            const resultElement = document.getElementById('tbspResult');

            if (tspInput === '' || tspInput === null) {
                resultElement.textContent = '0.00 tbsp';
                return;
            }

            const tsp = parseFloat(tspInput);

            if (isNaN(tsp)) {
                resultElement.textContent = 'Invalid input';
                return;
            }

            const tbsp = tsp / 3;
            resultElement.textContent = tbsp.toFixed(2) + ' tbsp';
        }
    </script>

