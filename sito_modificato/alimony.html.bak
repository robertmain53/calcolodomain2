    <script>
      // Slider outputs
      const payerTaxes = document.getElementById("payer-taxes");
      const payerTaxesOutput = document.getElementById("payer-taxes-output");
      const recipientTaxes = document.getElementById("recipient-taxes");
      const recipientTaxesOutput = document.getElementById(
        "recipient-taxes-output"
      );

      function updateSliderOutput(slider, output) {
        output.textContent = slider.value + "%";
      }

      if (payerTaxes && payerTaxesOutput) {
        payerTaxes.addEventListener("input", () =>
          updateSliderOutput(payerTaxes, payerTaxesOutput)
        );
        updateSliderOutput(payerTaxes, payerTaxesOutput);
      }
      if (recipientTaxes && recipientTaxesOutput) {
        recipientTaxes.addEventListener("input", () =>
          updateSliderOutput(recipientTaxes, recipientTaxesOutput)
        );
        updateSliderOutput(recipientTaxes, recipientTaxesOutput);
      }

      function formatMoney(value) {
        return value.toLocaleString(undefined, {
          minimumFractionDigits: 0,
          maximumFractionDigits: 0,
        });
      }

      function calculateAlimony() {
        const payerIncome = parseFloat(
          document.getElementById("payer-income").value
        );
        const recipientIncome = parseFloat(
          document.getElementById("recipient-income").value
        );
        const marriageYears = parseFloat(
          document.getElementById("marriage-years").value
        );
        const numChildren = parseInt(
          document.getElementById("num-children").value || "0",
          10
        );
        const region = document.getElementById("region").value;
        const taxTreatment =
          document.querySelector('input[name="tax-treatment"]:checked')
            ?.value || "no-tax";
        const payerTaxRate = parseFloat(payerTaxes.value) / 100;
        const recipientTaxRate = parseFloat(recipientTaxes.value) / 100;

        const errorEl = document.getElementById("calc-error");
        const resultsSection = document.getElementById("results-section");

        if (
          !isFinite(payerIncome) ||
          !isFinite(recipientIncome) ||
          payerIncome < 0 ||
          recipientIncome < 0 ||
          !isFinite(marriageYears) ||
          marriageYears < 0
        ) {
          errorEl.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const incomeGap = Math.max(payerIncome - recipientIncome, 0);

        // Base rate by marriage length
        let baseRate;
        if (marriageYears < 5) {
          baseRate = 0.15;
        } else if (marriageYears <= 15) {
          baseRate = 0.2;
        } else {
          baseRate = 0.25;
        }

        // Children adjustment
        const extraRate = Math.min(numChildren * 0.02, 0.1);
        const adjustedRate = baseRate + extraRate;

        let annualAlimony = incomeGap * adjustedRate;

        // Cap: payer keeps at least 55% of gross income
        const maxAnnualAlimony = payerIncome * 0.45;
        if (annualAlimony > maxAnnualAlimony) {
          annualAlimony = maxAnnualAlimony;
        }

        const monthlyAlimony = annualAlimony / 12;

        // Suggested duration
        let durationYears;
        if (marriageYears <= 0) {
          durationYears = 0;
        } else if (marriageYears < 3) {
          durationYears = 0.5 * marriageYears;
        } else if (marriageYears <= 10) {
          durationYears = 0.6 * marriageYears;
        } else if (marriageYears <= 20) {
          durationYears = 0.8 * marriageYears;
        } else {
          durationYears = Math.min(marriageYears, 20);
        }

        const durationMonths = Math.round(durationYears * 12);

        // Net income approximation
        let payerNetMonthly, recipientNetMonthly;
        const payerGrossMonthly = payerIncome / 12;
        const recipientGrossMonthly = recipientIncome / 12;

        if (taxTreatment === "no-tax") {
          payerNetMonthly =
            payerGrossMonthly * (1 - payerTaxRate) - monthlyAlimony;
          recipientNetMonthly =
            recipientGrossMonthly * (1 - recipientTaxRate) + monthlyAlimony;
        } else {
          // deductible/taxable
          const payerTaxableMonthly = payerGrossMonthly - monthlyAlimony;
          const recipientTaxableMonthly =
            recipientGrossMonthly + monthlyAlimony;

          payerNetMonthly = payerTaxableMonthly * (1 - payerTaxRate);
          recipientNetMonthly =
            recipientTaxableMonthly * (1 - recipientTaxRate);
        }

        const incomeGapAfter = payerNetMonthly - recipientNetMonthly;

        // Update UI
        document.getElementById("result-monthly").textContent =
          "$" + formatMoney(Math.max(monthlyAlimony, 0));
        document.getElementById("result-annual").textContent =
          "($" + formatMoney(Math.max(annualAlimony, 0)) + " per year)";
        document.getElementById("result-duration").textContent =
          durationYears.toFixed(1) + " years";
        document.getElementById("result-duration-months").textContent =
          durationMonths + " months";

        document.getElementById("result-net-payer").textContent =
          "Payer: $" +
          formatMoney(Math.max(payerNetMonthly, 0)) +
          " / month (approx.)";
        document.getElementById("result-net-recipient").textContent =
          "Recipient: $" +
          formatMoney(Math.max(recipientNetMonthly, 0)) +
          " / month (approx.)";
        document.getElementById("result-net-gap").textContent =
          "Income gap after alimony: $" +
          formatMoney(incomeGapAfter) +
          " / month (payer minus recipient, approx.)";

        // Formula explanation
        document.getElementById("formula-income-gap").textContent =
          "Income gap = max(Payer income − Recipient income, 0) = max(" +
          formatMoney(payerIncome) +
          " − " +
          formatMoney(recipientIncome) +
          ", 0) = $" +
          formatMoney(incomeGap);

        document.getElementById("formula-base-rate").textContent =
          "Base rate based on " +
          marriageYears +
          " years of marriage = " +
          (baseRate * 100).toFixed(1) +
          "% of the income gap.";

        document.getElementById("formula-children").textContent =
          "Children adjustment = min(" +
          numChildren +
          " × 2%, 10%) = +" +
          (extraRate * 100).toFixed(1) +
          " percentage points, so adjusted rate = " +
          (adjustedRate * 100).toFixed(1) +
          "%.";

        document.getElementById("formula-cap").textContent =
          "Uncapped annual alimony = $" +
          formatMoney(incomeGap * adjustedRate) +
          "; cap = 45% of payer income = $" +
          formatMoney(maxAnnualAlimony) +
          "; final annual alimony = $" +
          formatMoney(annualAlimony) +
          ".";

        resultsSection.classList.remove("hidden");
      }

      document
        .getElementById("calculate-btn")
        ?.addEventListener("click", calculateAlimony);

      document.getElementById("reset-btn")?.addEventListener("click", () => {
        document.getElementById("payer-income").value = 120000;
        document.getElementById("recipient-income").value = 40000;
        document.getElementById("marriage-years").value = 10;
        document.getElementById("num-children").value = 0;
        document.getElementById("region").value = "us-post2018";
        payerTaxes.value = 25;
        recipientTaxes.value = 20;
        updateSliderOutput(payerTaxes, payerTaxesOutput);
        updateSliderOutput(recipientTaxes, recipientTaxesOutput);
        document.querySelector(
          'input[name="tax-treatment"][value="no-tax"]'
        ).checked = true;
        document.getElementById("results-section").classList.add("hidden");
        document.getElementById("calc-error").classList.add("hidden");
      });

      // Auto-calc on load with defaults
      window.addEventListener("DOMContentLoaded", () => {
        calculateAlimony();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
