    <script>
      // Core conversion helpers
      function parseNumber(value) {
        if (typeof value !== "string") return NaN;
        const cleaned = value.replace(/×10\^/i, "e").trim();
        if (cleaned === "") return NaN;
        return Number(cleaned);
      }

      function formatNumber(num, decimals = 6) {
        if (!isFinite(num)) return "";
        if (
          Math.abs(num) >= 1e9 ||
          (Math.abs(num) > 0 && Math.abs(num) < 1e-3)
        ) {
          return num.toExponential(decimals);
        }
        return num.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          useGrouping: true,
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        const hzInput = document.getElementById("hzInput");
        const mhzInput = document.getElementById("mhzInput");
        const errorEl = document.getElementById("converterError");
        const resultSummary = document.getElementById("resultSummary");
        const liveStatus = document.getElementById("liveStatus");
        const swapBtn = document.getElementById("swapBtn");
        const clearBtn = document.getElementById("clearBtn");

        const batchInput = document.getElementById("batchInput");
        const batchConvertBtn = document.getElementById("batchConvertBtn");
        const batchClearBtn = document.getElementById("batchClearBtn");
        const batchStatus = document.getElementById("batchStatus");
        const batchOutputWrapper =
          document.getElementById("batchOutputWrapper");
        const batchOutput = document.getElementById("batchOutput");

        let activeField = null; // 'hz' or 'mhz'

        function clearError() {
          errorEl.textContent = "";
          hzInput.classList.remove("input-error");
          mhzInput.classList.remove("input-error");
        }

        function setError(message, field) {
          errorEl.textContent = message;
          hzInput.classList.toggle("input-error", field === "hz");
          mhzInput.classList.toggle("input-error", field === "mhz");
        }

        function updateFromHz() {
          const val = hzInput.value;
          if (val.trim() === "") {
            mhzInput.value = "";
            resultSummary.textContent = "Enter a value to see the conversion.";
            clearError();
            return;
          }
          const hz = parseNumber(val);
          if (isNaN(hz)) {
            setError("Please enter a valid number for Hertz (Hz).", "hz");
            mhzInput.value = "";
            resultSummary.textContent = "Invalid input.";
            return;
          }
          clearError();
          const mhz = hz / 1e6;
          mhzInput.value = mhz.toString();
          resultSummary.textContent = `${formatNumber(hz)} Hz = ${formatNumber(
            mhz
          )} MHz`;
          liveStatus.textContent = "Converted Hz to MHz.";
        }

        function updateFromMHz() {
          const val = mhzInput.value;
          if (val.trim() === "") {
            hzInput.value = "";
            resultSummary.textContent = "Enter a value to see the conversion.";
            clearError();
            return;
          }
          const mhz = parseNumber(val);
          if (isNaN(mhz)) {
            setError("Please enter a valid number for Megahertz (MHz).", "mhz");
            hzInput.value = "";
            resultSummary.textContent = "Invalid input.";
            return;
          }
          clearError();
          const hz = mhz * 1e6;
          hzInput.value = hz.toString();
          resultSummary.textContent = `${formatNumber(
            mhz
          )} MHz = ${formatNumber(hz)} Hz`;
          liveStatus.textContent = "Converted MHz to Hz.";
        }

        hzInput.addEventListener("input", () => {
          activeField = "hz";
          updateFromHz();
        });

        mhzInput.addEventListener("input", () => {
          activeField = "mhz";
          updateFromMHz();
        });

        swapBtn.addEventListener("click", () => {
          const hzVal = hzInput.value;
          hzInput.value = mhzInput.value;
          mhzInput.value = hzVal;
          if (activeField === "hz") {
            updateFromHz();
          } else if (activeField === "mhz") {
            updateFromMHz();
          } else if (hzInput.value.trim() !== "") {
            updateFromHz();
          } else if (mhzInput.value.trim() !== "") {
            updateFromMHz();
          }
        });

        clearBtn.addEventListener("click", () => {
          hzInput.value = "";
          mhzInput.value = "";
          activeField = null;
          clearError();
          resultSummary.textContent = "Enter a value to see the conversion.";
          liveStatus.textContent = "Cleared.";
        });

        // Batch conversion
        batchConvertBtn.addEventListener("click", () => {
          const text = batchInput.value.trim();
          if (!text) {
            batchStatus.textContent =
              "Please paste one or more Hz values first.";
            batchOutputWrapper.classList.add("hidden");
            return;
          }
          const separators = /[,\n;\t ]+/;
          const tokens = text.split(separators).filter((t) => t.trim() !== "");
          if (tokens.length === 0) {
            batchStatus.textContent = "No valid numbers found.";
            batchOutputWrapper.classList.add("hidden");
            return;
          }
          const lines = [];
          let invalidCount = 0;
          tokens.forEach((tok) => {
            const num = parseNumber(tok);
            if (isNaN(num)) {
              invalidCount++;
              return;
            }
            const mhz = num / 1e6;
            lines.push(`${tok} Hz = ${mhz}`);
          });
          batchOutput.value = lines.join("\n");
          batchOutputWrapper.classList.remove("hidden");
          const validCount = lines.length;
          batchStatus.textContent = `Converted ${validCount} value${
            validCount !== 1 ? "s" : ""
          }${invalidCount ? ` (${invalidCount} invalid skipped)` : ""}.`;
        });

        batchClearBtn.addEventListener("click", () => {
          batchInput.value = "";
          batchOutput.value = "";
          batchOutputWrapper.classList.add("hidden");
          batchStatus.textContent = "";
        });
      });
    </script>

