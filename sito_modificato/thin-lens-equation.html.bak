    <script>
      // Thin lens calculator logic
      (function () {
        const solveButtons = document.querySelectorAll(".solve-toggle");
        const lensTypeEl = document.getElementById("lens-type");
        const unitSelect = document.getElementById("unit-select");
        const unitLabels = document.querySelectorAll(".unit-label");
        const fInput = document.getElementById("f-input");
        const doInput = document.getElementById("do-input");
        const diInput = document.getElementById("di-input");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorMsg = document.getElementById("error-msg");
        const resultsCard = document.getElementById("results-card");

        let solveFor = "f";

        function setSolveFor(target) {
          solveFor = target;
          solveButtons.forEach((btn) => {
            if (btn.dataset.solve === target) {
              btn.classList.add("bg-blue-600", "text-white");
              btn.classList.remove("bg-white", "text-gray-700");
            } else {
              btn.classList.remove("bg-blue-600", "text-white");
              btn.classList.add("bg-white", "text-gray-700");
            }
          });
          // Clear the field being solved for and highlight it
          if (target === "f") {
            fInput.value = "";
          } else if (target === "do") {
            doInput.value = "";
          } else if (target === "di") {
            diInput.value = "";
          }
        }

        solveButtons.forEach((btn) => {
          btn.addEventListener("click", () => setSolveFor(btn.dataset.solve));
        });

        unitSelect.addEventListener("change", () => {
          const unit = unitSelect.value;
          unitLabels.forEach((l) => (l.textContent = unit));
        });

        function parseVal(input) {
          const v = parseFloat(input.value);
          return isNaN(v) ? null : v;
        }

        function updateDiagram(f, d_o, d_i) {
          const svgWidth = 600;
          const centerX = 300;
          const axisY = 130;

          const Fleft = document.getElementById("F-left");
          const Fright = document.getElementById("F-right");
          const objLine = document.getElementById("obj-line");
          const objArrow = document.getElementById("obj-arrow");
          const imgLine = document.getElementById("img-line");
          const imgArrow = document.getElementById("img-arrow");
          const imgLabel = document.getElementById("img-label");

          if (!isFinite(f) || !isFinite(d_o) || !isFinite(d_i)) return;

          const maxSpan = 250; // max distance from lens in drawing
          const maxPhysical = Math.max(
            Math.abs(d_o),
            Math.abs(d_i),
            Math.abs(f),
            1e-6
          );
          const scale = maxSpan / maxPhysical;

          const fPix = f * scale;
          const doPix = d_o * scale;
          const diPix = d_i * scale;

          // Focal points
          Fleft.setAttribute("cx", centerX - fPix);
          Fright.setAttribute("cx", centerX + fPix);

          // Object on left side (real object assumed)
          const objX = centerX - doPix;
          const objHeight = 50;
          objLine.setAttribute("x1", objX);
          objLine.setAttribute("x2", objX);
          objLine.setAttribute("y1", axisY);
          objLine.setAttribute("y2", axisY - objHeight);
          objArrow.setAttribute(
            "points",
            `${objX},${axisY - objHeight - 10} ${objX - 6},${
              axisY - objHeight + 2
            } ${objX + 6},${axisY - objHeight + 2}`
          );

          // Image position
          const imgX = centerX + diPix;
          const m = -d_i / d_o;
          const imgHeight = objHeight * Math.abs(m) || 1;
          const inverted = m < 0;

          imgLine.setAttribute("x1", imgX);
          imgLine.setAttribute("x2", imgX);
          if (inverted) {
            imgLine.setAttribute("y1", axisY);
            imgLine.setAttribute("y2", axisY + imgHeight);
            imgArrow.setAttribute(
              "points",
              `${imgX},${axisY + imgHeight + 10} ${imgX - 6},${
                axisY + imgHeight - 2
              } ${imgX + 6},${axisY + imgHeight - 2}`
            );
            imgLabel.setAttribute("y", axisY + imgHeight + 25);
          } else {
            imgLine.setAttribute("y1", axisY);
            imgLine.setAttribute("y2", axisY - imgHeight);
            imgArrow.setAttribute(
              "points",
              `${imgX},${axisY - imgHeight - 10} ${imgX - 6},${
                axisY - imgHeight + 2
              } ${imgX + 6},${axisY - imgHeight + 2}`
            );
            imgLabel.setAttribute("y", axisY - imgHeight - 15);
          }
          imgLabel.setAttribute("x", imgX - 20);
        }

        function classifyImage(d_i, m) {
          let type = "—",
            orientation = "—",
            size = "—",
            side = "—";

          if (!isFinite(d_i) || !isFinite(m)) {
            return { type, orientation, size, side };
          }

          type = d_i > 0 ? "Real image" : "Virtual image";
          orientation = m < 0 ? "Inverted" : "Upright";

          const absM = Math.abs(m);
          if (Math.abs(absM - 1) < 1e-3) size = "Same size";
          else if (absM > 1) size = "Magnified";
          else size = "Reduced";

          side =
            d_i > 0
              ? "Opposite side of lens (image side)"
              : "Same side as object";

          return { type, orientation, size, side };
        }

        calcBtn.addEventListener("click", () => {
          errorMsg.textContent = "";
          resultsCard.classList.add("hidden");

          let f = parseVal(fInput);
          let d_o = parseVal(doInput);
          let d_i = parseVal(diInput);

          const lensType = lensTypeEl.value;
          if (lensType === "diverging" && f !== null) {
            // enforce negative focal length for diverging lens
            f = -Math.abs(f);
          }

          try {
            if (solveFor === "f") {
              if (d_o === null || d_i === null)
                throw new Error(
                  "Enter both object and image distances to solve for focal length."
                );
              if (d_o === 0 || d_i === 0)
                throw new Error("Distances cannot be zero.");
              const invF = 1 / d_o + 1 / d_i;
              if (invF === 0)
                throw new Error(
                  "Invalid combination of distances (1/f would be zero)."
                );
              f = 1 / invF;
            } else if (solveFor === "do") {
              if (f === null || d_i === null)
                throw new Error(
                  "Enter focal length and image distance to solve for object distance."
                );
              if (f === 0 || d_i === 0)
                throw new Error("Distances cannot be zero.");
              const invDo = 1 / f - 1 / d_i;
              if (invDo === 0)
                throw new Error(
                  "Invalid combination of focal length and image distance."
                );
              d_o = 1 / invDo;
            } else if (solveFor === "di") {
              if (f === null || d_o === null)
                throw new Error(
                  "Enter focal length and object distance to solve for image distance."
                );
              if (f === 0 || d_o === 0)
                throw new Error("Distances cannot be zero.");
              const invDi = 1 / f - 1 / d_o;
              if (invDi === 0)
                throw new Error(
                  "Invalid combination of focal length and object distance."
                );
              d_i = 1 / invDi;
            }

            if (!isFinite(f) || !isFinite(d_o) || !isFinite(d_i)) {
              throw new Error("Calculation failed due to invalid values.");
            }

            // Update inputs with solved values
            fInput.value = f.toFixed(4).replace(/\.?0+$/, "");
            doInput.value = d_o.toFixed(4).replace(/\.?0+$/, "");
            diInput.value = d_i.toFixed(4).replace(/\.?0+$/, "");

            const m = -d_i / d_o;

            // Update results
            document.getElementById("res-f").textContent = f
              .toFixed(4)
              .replace(/\.?0+$/, "");
            document.getElementById("res-do").textContent = d_o
              .toFixed(4)
              .replace(/\.?0+$/, "");
            document.getElementById("res-di").textContent = d_i
              .toFixed(4)
              .replace(/\.?0+$/, "");
            document.getElementById("res-m").textContent = m
              .toFixed(4)
              .replace(/\.?0+$/, "");

            const cls = classifyImage(d_i, m);
            document.getElementById("res-image-type").textContent = cls.type;
            document.getElementById("res-orientation").textContent =
              cls.orientation;
            document.getElementById("res-size").textContent = cls.size;
            document.getElementById("res-side").textContent = cls.side;

            resultsCard.classList.remove("hidden");
            updateDiagram(f, d_o, d_i);
          } catch (e) {
            errorMsg.textContent = e.message;
          }
        });

        resetBtn.addEventListener("click", () => {
          fInput.value = "";
          doInput.value = "";
          diInput.value = "";
          errorMsg.textContent = "";
          resultsCard.classList.add("hidden");
          setSolveFor("f");
        });

        // Initialize
        setSolveFor("f");
        updateDiagram(10, 30, 15);
      })();
    </script>

