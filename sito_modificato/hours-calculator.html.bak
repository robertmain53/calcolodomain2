<script>
  // Tab handling
  const tabs = [
    { tab: 'tab-diff', panel: 'panel-diff' },
    { tab: 'tab-add', panel: 'panel-add' },
    { tab: 'tab-timesheet', panel: 'panel-timesheet' }
  ];
  tabs.forEach(({ tab, panel }) => {
    document.getElementById(tab).addEventListener('click', () => {
      tabs.forEach(({ tab: t, panel: p }) => {
        const tabEl = document.getElementById(t);
        const panelEl = document.getElementById(p);
        if (t === tab) {
          tabEl.classList.add('tab-active');
          tabEl.setAttribute('aria-selected', 'true');
          panelEl.classList.remove('hidden');
        } else {
          tabEl.classList.remove('tab-active');
          tabEl.setAttribute('aria-selected', 'false');
          panelEl.classList.add('hidden');
        }
      });
    });
  });

  // Helpers
  function parseTimeToMinutes(timeStr) {
    if (!timeStr) return null;
    const parts = timeStr.split(':');
    if (parts.length < 2) return null;
    const h = parseInt(parts[0], 10);
    const m = parseInt(parts[1], 10);
    if (isNaN(h) || isNaN(m) || m < 0 || m > 59) return null;
    return h * 60 + m;
  }

  function formatMinutesToHM(mins) {
    const sign = mins < 0 ? '-' : '';
    const abs = Math.abs(mins);
    const h = Math.floor(abs / 60);
    const m = abs % 60;
    return sign + h + ':' + String(m).padStart(2, '0');
  }

  function formatMinutesToDecimal(mins, decimals = 2) {
    const hours = mins / 60;
    return hours.toFixed(decimals);
  }

  // Quick difference
  document.getElementById('btn-diff-calc').addEventListener('click', () => {
    const start = document.getElementById('diff-start').value;
    const end = document.getElementById('diff-end').value;
    const crossesMidnight = document.getElementById('diff-cross-midnight').checked;
    const resultEl = document.getElementById('diff-result');

    const startMin = parseTimeToMinutes(start);
    const endMin = parseTimeToMinutes(end);

    if (startMin === null || endMin === null) {
      resultEl.textContent = 'Please enter valid start and end times.';
      resultEl.classList.remove('hidden');
      return;
    }

    let diff = endMin - startMin;
    if (crossesMidnight && diff <= 0) {
      diff += 24 * 60;
    }

    if (diff < 0) {
      resultEl.textContent = 'End time must be after start time unless the period crosses midnight.';
      resultEl.classList.remove('hidden');
      return;
    }

    const hm = formatMinutesToHM(diff);
    const dec = formatMinutesToDecimal(diff);

    resultEl.innerHTML = `
      <p><strong>Result:</strong> ${hm} (hours:minutes)</p>
      <p><strong>Decimal hours:</strong> ${dec} h</p>
      <p class="mt-1 text-gray-600 text-xs">Tip: use the Timesheet tab to add breaks and calculate weekly totals.</p>
    `;
    resultEl.classList.remove('hidden');
  });

  // Add / subtract
  document.getElementById('btn-add-calc').addEventListener('click', () => {
    const baseH = document.getElementById('add-base-hours').value;
    const baseM = document.getElementById('add-base-mins').value;
    const deltaH = document.getElementById('add-delta-hours').value;
    const deltaM = document.getElementById('add-delta-mins').value;
    const sign = document.getElementById('add-sign').value;
    const resultEl = document.getElementById('add-result');

    const baseMinutes = (parseInt(baseH || '0', 10) * 60) + parseInt(baseM || '0', 10);
    const deltaMinutes = (parseInt(deltaH || '0', 10) * 60) + parseInt(deltaM || '0', 10);

    if (isNaN(baseMinutes) || isNaN(deltaMinutes)) {
      resultEl.textContent = 'Please enter valid hours and minutes.';
      resultEl.classList.remove('hidden');
      return;
    }

    let resultMinutes = sign === 'plus' ? baseMinutes + deltaMinutes : baseMinutes - deltaMinutes;

    const hm = formatMinutesToHM(resultMinutes);
    const dec = formatMinutesToDecimal(resultMinutes);

    resultEl.innerHTML = `
      <p><strong>Resulting time:</strong> ${hm} (hours:minutes)</p>
      <p><strong>Decimal hours:</strong> ${dec} h</p>
    `;
    resultEl.classList.remove('hidden');
  });

  // Timesheet
  const tsBody = document.getElementById('ts-body');
  let tsRowId = 0;

  function createTsRow(label = '', dateStr = '') {
    const id = tsRowId++;
    const tr = document.createElement('tr');
    tr.dataset.rowId = id;

    tr.innerHTML = `
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="text" class="w-24 border border-gray-200 rounded px-1 py-0.5 text-xs" value="${label}">
      </td>
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="date" class="border border-gray-200 rounded px-1 py-0.5 text-xs w-32" value="${dateStr}">
      </td>
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="time" class="border border-gray-200 rounded px-1 py-0.5 text-xs w-24 ts-start">
      </td>
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="time" class="border border-gray-200 rounded px-1 py-0.5 text-xs w-24 ts-end">
      </td>
      <td class="border-t border-gray-200 px-2 py-1 text-center">
        <input type="checkbox" class="rounded border-gray-300 text-blue-600 ts-cross">
      </td>
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="number" min="0" class="border border-gray-200 rounded px-1 py-0.5 text-xs w-20 ts-break">
      </td>
      <td class="border-t border-gray-200 px-2 py-1 text-right ts-hm">–</td>
      <td class="border-t border-gray-200 px-2 py-1 text-right ts-dec">–</td>
      <td class="border-t border-gray-200 px-2 py-1 text-right ts-ot">–</td>
      <td class="border-t border-gray-200 px-2 py-1">
        <input type="text" class="w-32 border border-gray-200 rounded px-1 py-0.5 text-xs">
      </td>
      <td class="border-t border-gray-200 px-2 py-1 text-center">
        <button type="button" class="text-red-500 hover:text-red-700 text-xs ts-remove" title="Remove row">&times;</button>
      </td>
    `;
    tsBody.appendChild(tr);
  }

  function initDefaultRows() {
    tsBody.innerHTML = '';
    const includeWeekends = document.getElementById('ts-include-weekends').checked;
    const today = new Date();
    const start = new Date(today);
    start.setDate(today.getDate() - today.getDay()); // Sunday
    const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];

    for (let i = 0; i < 7; i++) {
      const d = new Date(start);
      d.setDate(start.getDate() + i);
      const isWeekend = d.getDay() === 0 || d.getDay() === 6;
      if (!includeWeekends && isWeekend) continue;
      const label = dayNames[d.getDay()];
      const dateStr = d.toISOString().slice(0, 10);
      createTsRow(label, dateStr);
    }
  }

  document.getElementById('ts-add-row').addEventListener('click', () => createTsRow());
  document.getElementById('ts-clear').addEventListener('click', () => {
    tsBody.innerHTML = '';
    document.getElementById('ts-summary').classList.add('hidden');
  });
  document.getElementById('ts-include-weekends').addEventListener('change', initDefaultRows);

  tsBody.addEventListener('click', (e) => {
    if (e.target.classList.contains('ts-remove')) {
      const tr = e.target.closest('tr');
      if (tr) tr.remove();
    }
  });

  document.getElementById('btn-ts-calc').addEventListener('click', () => {
    const rows = Array.from(tsBody.querySelectorAll('tr'));
    const summaryEl = document.getElementById('ts-summary');
    let totalMinutes = 0;
    let totalDailyOtMinutes = 0;

    const dailyOtEnabled = document.getElementById('ts-ot-daily-enabled').checked;
    const dailyOtThreshold = parseFloat(document.getElementById('ts-ot-daily-threshold').value || '0') * 60;
    const weeklyOtEnabled = document.getElementById('ts-ot-weekly-enabled').checked;
    const weeklyOtThreshold = parseFloat(document.getElementById('ts-ot-weekly-threshold').value || '0') * 60;

    rows.forEach(row => {
      const startInput = row.querySelector('.ts-start');
      const endInput = row.querySelector('.ts-end');
      const crossInput = row.querySelector('.ts-cross');
      const breakInput = row.querySelector('.ts-break');
      const hmCell = row.querySelector('.ts-hm');
      const decCell = row.querySelector('.ts-dec');
      const otCell = row.querySelector('.ts-ot');

      startInput.classList.remove('input-error');
      endInput.classList.remove('input-error');

      const startVal = startInput.value;
      const endVal = endInput.value;
      const cross = crossInput.checked;
      const breakMin = parseInt(breakInput.value || '0', 10);

      if (!startVal || !endVal) {
        hmCell.textContent = '–';
        decCell.textContent = '–';
        otCell.textContent = '–';
        return;
      }

      const startM = parseTimeToMinutes(startVal);
      const endM = parseTimeToMinutes(endVal);
      if (startM === null || endM === null) {
        startInput.classList.add('input-error');
        endInput.classList.add('input-error');
        hmCell.textContent = 'Err';
        decCell.textContent = 'Err';
        otCell.textContent = 'Err';
        return;
      }

      let diff = endM - startM;
      if (cross && diff <= 0) diff += 24 * 60;
      if (diff < 0) {
        startInput.classList.add('input-error');
        endInput.classList.add('input-error');
        hmCell.textContent = 'Err';
        decCell.textContent = 'Err';
        otCell.textContent = 'Err';
        return;
      }

      const net = Math.max(0, diff - (isNaN(breakMin) ? 0 : breakMin));
      totalMinutes += net;

      let dailyOt = 0;
      if (dailyOtEnabled && net > dailyOtThreshold) {
        dailyOt = net - dailyOtThreshold;
        totalDailyOtMinutes += dailyOt;
      }

      hmCell.textContent = formatMinutesToHM(net);
      decCell.textContent = formatMinutesToDecimal(net);
      otCell.textContent = dailyOt > 0 ? formatMinutesToDecimal(dailyOt) : '0.00';
    });

    let weeklyOt = 0;
    if (weeklyOtEnabled && totalMinutes > weeklyOtThreshold) {
      weeklyOt = totalMinutes - weeklyOtThreshold;
    }

    summaryEl.innerHTML = `
      <p><strong>Total hours:</strong> ${formatMinutesToHM(totalMinutes)} (${formatMinutesToDecimal(totalMinutes)} h)</p>
      <p><strong>Daily overtime (sum of days over threshold):</strong> ${formatMinutesToDecimal(totalDailyOtMinutes)} h</p>
      <p><strong>Weekly overtime (over weekly threshold):</strong> ${formatMinutesToDecimal(weeklyOt)} h</p>
      <p class="mt-1 text-xs text-gray-600">Note: Depending on your local labor laws, overtime may be based on daily, weekly, or both thresholds. Always confirm with your HR or payroll department.</p>
    `;
    summaryEl.classList.remove('hidden');
  });

  document.getElementById('ts-copy').addEventListener('click', () => {
    const rows = Array.from(tsBody.querySelectorAll('tr'));
    if (!rows.length) return;
    const header = ['Label', 'Date', 'Start', 'End', 'CrossesMidnight', 'BreakMinutes', 'HoursHM', 'HoursDecimal', 'DailyOT', 'Notes'];
    const lines = [header.join('\t')];

    rows.forEach(row => {
      const cells = row.querySelectorAll('td');
      const label = cells[0].querySelector('input').value || '';
      const date = cells[1].querySelector('input').value || '';
      const start = cells[2].querySelector('input').value || '';
      const end = cells[3].querySelector('input').value || '';
      const cross = cells[4].querySelector('input').checked ? 'yes' : 'no';
      const brk = cells[5].querySelector('input').value || '';
      const hm = cells[6].textContent.trim();
      const dec = cells[7].textContent.trim();
      const ot = cells[8].textContent.trim();
      const notes = cells[9].querySelector('input').value || '';
      lines.push([label, date, start, end, cross, brk, hm, dec, ot, notes].join('\t'));
    });

    const text = lines.join('\n');
    navigator.clipboard.writeText(text).then(() => {
      alert('Timesheet copied. You can now paste it into Excel, Google Sheets, or another program.');
    }).catch(() => {
      alert('Unable to copy to clipboard. Please select and copy manually.');
    });
  });

  // Initialize default timesheet rows
  initDefaultRows();
</script>

