  <script>
    // mobile menu toggle
    const mobileToggle = document.getElementById('mobile-menu-toggle');
    const mobileMenu = document.getElementById('mobile-menu');
    if (mobileToggle && mobileMenu) {
      mobileToggle.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('hidden');
        mobileMenu.classList.toggle('hidden', !isHidden);
        mobileToggle.setAttribute('aria-expanded', String(isHidden));
      });
    }

    function atbashChar(ch, preserveCase) {
      const code = ch.charCodeAt(0);
      // A-Z
      if (code >= 65 && code <= 90) {
        const pos = code - 65; // 0..25
        const mirrored = 25 - pos; // 25..0
        return String.fromCharCode(65 + mirrored);
      }
      // a-z
      if (code >= 97 && code <= 122) {
        const pos = code - 97;
        const mirrored = 25 - pos;
        const baseChar = String.fromCharCode(97 + mirrored);
        if (preserveCase) return baseChar;
        return baseChar;
      }
      return ch;
    }

    function atbashTransform(text, preserveCase) {
      let out = '';
      for (let i = 0; i < text.length; i++) {
        const ch = text[i];
        // we already preserve uppercase and lowercase separately
        out += atbashChar(ch, preserveCase);
      }
      return out;
    }

    const inputText = document.getElementById('input-text');
    const outputText = document.getElementById('output-text');
    const runBtn = document.getElementById('run-btn');
    const clearBtn = document.getElementById('clear-btn');
    const preserveCaseChk = document.getElementById('preserve-case');
    const copyBtn = document.getElementById('copy-btn');
    const copyMsg = document.getElementById('copy-msg');

    function runAtbash() {
      const txt = inputText.value;
      const preserve = preserveCaseChk.checked;
      const result = atbashTransform(txt, preserve);
      outputText.value = result;
    }

    runBtn.addEventListener('click', runAtbash);
    inputText.addEventListener('input', runAtbash);
    preserveCaseChk.addEventListener('change', runAtbash);

    clearBtn.addEventListener('click', () => {
      inputText.value = '';
      outputText.value = '';
      copyMsg.classList.add('hidden');
    });

    copyBtn.addEventListener('click', async () => {
      try {
        await navigator.clipboard.writeText(outputText.value);
        copyMsg.classList.remove('hidden');
        setTimeout(() => copyMsg.classList.add('hidden'), 2000);
      } catch (e) {
        copyMsg.textContent = 'Could not copy.';
        copyMsg.classList.remove('hidden');
      }
    });

    // initial render
    runAtbash();
  </script>

