    <script>
      // Utility: unit conversions to feet and meters
      function toFeet(value, unit) {
        const v = Number(value);
        switch (unit) {
          case "ft":
            return v;
          case "in":
            return v / 12;
          case "yd":
            return v * 3;
          case "m":
            return v * 3.280839895;
          case "cm":
            return v * 0.03280839895;
          case "mm":
            return v * 0.003280839895;
          default:
            return v;
        }
      }

      function toMeters(value, unit) {
        const v = Number(value);
        switch (unit) {
          case "m":
            return v;
          case "cm":
            return v / 100;
          case "mm":
            return v / 1000;
          case "ft":
            return v * 0.3048;
          case "in":
            return v * 0.0254;
          case "yd":
            return v * 0.9144;
          default:
            return v;
        }
      }

      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      // Shape switching
      const shapeSelect = document.getElementById("shape");
      const rectInputs = document.getElementById("rect-inputs");
      const circleInputs = document.getElementById("circle-inputs");
      const borderInputs = document.getElementById("border-inputs");

      shapeSelect.addEventListener("change", () => {
        const shape = shapeSelect.value;
        rectInputs.classList.add("hidden");
        circleInputs.classList.add("hidden");
        borderInputs.classList.add("hidden");

        if (shape === "rectangle") rectInputs.classList.remove("hidden");
        if (shape === "circle") circleInputs.classList.remove("hidden");
        if (shape === "border") borderInputs.classList.remove("hidden");
      });

      // Unit system switching: adjust defaults only, not existing values
      const unitSystemSelect = document.getElementById("unit-system");
      const lengthUnit = document.getElementById("length-unit");
      const widthUnit = document.getElementById("width-unit");
      const diameterUnit = document.getElementById("diameter-unit");
      const outerLengthUnit = document.getElementById("outer-length-unit");
      const outerWidthUnit = document.getElementById("outer-width-unit");
      const innerLengthUnit = document.getElementById("inner-length-unit");
      const innerWidthUnit = document.getElementById("inner-width-unit");
      const depthUnit = document.getElementById("depth-unit");
      const densityUnit = document.getElementById("density-unit");
      const bagWeightUnit = document.getElementById("bag-weight-unit");

      unitSystemSelect.addEventListener("change", () => {
        if (unitSystemSelect.value === "imperial") {
          lengthUnit.value = "ft";
          widthUnit.value = "ft";
          diameterUnit.value = "ft";
          outerLengthUnit.value = "ft";
          outerWidthUnit.value = "ft";
          innerLengthUnit.value = "ft";
          innerWidthUnit.value = "ft";
          depthUnit.value = "in";
          densityUnit.value = "lb_ft3";
          bagWeightUnit.value = "lb";
        } else {
          lengthUnit.value = "m";
          widthUnit.value = "m";
          diameterUnit.value = "m";
          outerLengthUnit.value = "m";
          outerWidthUnit.value = "m";
          innerLengthUnit.value = "m";
          innerWidthUnit.value = "m";
          depthUnit.value = "cm";
          densityUnit.value = "kg_m3";
          bagWeightUnit.value = "kg";
        }
      });

      // Density preset
      document
        .getElementById("density-preset-btn")
        .addEventListener("click", () => {
          if (densityUnit.value === "lb_ft3") {
            document.getElementById("density").value = 100; // typical dry sand
          } else {
            document.getElementById("density").value = 1600;
          }
        });

      // Preset depth buttons
      document.querySelectorAll(".preset-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const depthIn = Number(btn.dataset.depthIn || 0);
          const currentUnit = depthUnit.value;
          let depthValue;

          if (currentUnit === "in") {
            depthValue = depthIn;
          } else if (currentUnit === "ft") {
            depthValue = depthIn / 12;
          } else if (currentUnit === "yd") {
            depthValue = depthIn / 36;
          } else if (currentUnit === "m") {
            depthValue = depthIn * 0.0254;
          } else if (currentUnit === "cm") {
            depthValue = depthIn * 2.54;
          } else if (currentUnit === "mm") {
            depthValue = depthIn * 25.4;
          }

          document.getElementById("depth").value = round(depthValue, 3);
        });
      });

      // Main calculation
      document.getElementById("calculate-btn").addEventListener("click", () => {
        const shape = shapeSelect.value;
        const system = unitSystemSelect.value;

        let areaFt2 = 0;
        let areaM2 = 0;

        try {
          if (shape === "rectangle") {
            const L = parseFloat(document.getElementById("length").value);
            const W = parseFloat(document.getElementById("width").value);
            if (L <= 0 || W <= 0 || isNaN(L) || isNaN(W))
              throw new Error("Enter positive length and width.");
            const Lft = toFeet(L, lengthUnit.value);
            const Wft = toFeet(W, widthUnit.value);
            areaFt2 = Lft * Wft;
            areaM2 =
              toMeters(L, lengthUnit.value) * toMeters(W, widthUnit.value);
          } else if (shape === "circle") {
            const D = parseFloat(document.getElementById("diameter").value);
            if (D <= 0 || isNaN(D))
              throw new Error("Enter a positive diameter.");
            const Dft = toFeet(D, diameterUnit.value);
            const radiusFt = Dft / 2;
            areaFt2 = Math.PI * radiusFt * radiusFt;
            const Dm = toMeters(D, diameterUnit.value);
            const radiusM = Dm / 2;
            areaM2 = Math.PI * radiusM * radiusM;
          } else if (shape === "border") {
            const OL = parseFloat(
              document.getElementById("outer-length").value
            );
            const OW = parseFloat(document.getElementById("outer-width").value);
            const IL = parseFloat(
              document.getElementById("inner-length").value
            );
            const IW = parseFloat(document.getElementById("inner-width").value);
            if ([OL, OW, IL, IW].some((v) => v <= 0 || isNaN(v)))
              throw new Error(
                "Enter positive dimensions for inner and outer rectangles."
              );
            const OLft = toFeet(OL, outerLengthUnit.value);
            const OWft = toFeet(OW, outerWidthUnit.value);
            const ILft = toFeet(IL, innerLengthUnit.value);
            const IWft = toFeet(IW, innerWidthUnit.value);
            const outerAreaFt2 = OLft * OWft;
            const innerAreaFt2 = ILft * IWft;
            if (innerAreaFt2 >= outerAreaFt2)
              throw new Error("Inner area must be smaller than outer area.");
            areaFt2 = outerAreaFt2 - innerAreaFt2;

            const OLm = toMeters(OL, outerLengthUnit.value);
            const OWm = toMeters(OW, outerWidthUnit.value);
            const ILm = toMeters(IL, innerLengthUnit.value);
            const IWm = toMeters(IW, innerWidthUnit.value);
            const outerAreaM2 = OLm * OWm;
            const innerAreaM2 = ILm * IWm;
            areaM2 = outerAreaM2 - innerAreaM2;
          }

          const depthVal = parseFloat(document.getElementById("depth").value);
          if (depthVal <= 0 || isNaN(depthVal))
            throw new Error("Enter a positive depth.");
          const depthFt = toFeet(depthVal, depthUnit.value);
          const depthM = toMeters(depthVal, depthUnit.value);

          // Raw volumes
          let volFt3 = areaFt2 * depthFt;
          let volM3 = areaM2 * depthM;

          // Waste / compaction
          const wastePct =
            parseFloat(document.getElementById("waste").value) || 0;
          const factor = 1 + wastePct / 100;
          volFt3 *= factor;
          volM3 *= factor;

          const volYd3 = volFt3 / 27;
          const volL = volM3 * 1000;

          // Density and weight
          const density = parseFloat(document.getElementById("density").value);
          if (density <= 0 || isNaN(density))
            throw new Error("Enter a positive density.");
          const densityUnitVal = densityUnit.value;

          let weightLb, weightKg;
          if (densityUnitVal === "lb_ft3") {
            weightLb = volFt3 * density;
            weightKg = weightLb * 0.45359237;
          } else {
            weightKg = volM3 * density;
            weightLb = weightKg / 0.45359237;
          }
          const weightShortTons = weightLb / 2000;
          const weightMetricTonnes = weightKg / 1000;

          // Bags
          const bagWeight = parseFloat(
            document.getElementById("bag-weight").value
          );
          const bagUnit = bagWeightUnit.value;
          let bagsText = "Bag weight not provided.";
          if (bagWeight > 0 && !isNaN(bagWeight)) {
            let bagWeightKg, bagWeightLb;
            if (bagUnit === "lb") {
              bagWeightLb = bagWeight;
              bagWeightKg = bagWeight * 0.45359237;
            } else {
              bagWeightKg = bagWeight;
              bagWeightLb = bagWeight / 0.45359237;
            }
            const bagsByLb = weightLb / bagWeightLb;
            const bagsByKg = weightKg / bagWeightKg;
            const bags = isFinite(bagsByLb) ? bagsByLb : bagsByKg;
            const bagsRounded = Math.ceil(bags);
            bagsText = `${bagsRounded} bags of ${bagWeight} ${bagUnit} (exact: ${round(
              bags,
              1
            )} bags).`;
          }

          // Populate results
          document.getElementById("results-main").classList.remove("hidden");
          const volumeList = document.getElementById("volume-results");
          volumeList.innerHTML = `
        <li><strong>${round(volFt3, 2)}</strong> cubic feet (ft³)</li>
        <li><strong>${round(volYd3, 3)}</strong> cubic yards (yd³)</li>
        <li><strong>${round(volM3, 3)}</strong> cubic meters (m³)</li>
        <li><strong>${round(volL, 0)}</strong> liters (L)</li>
      `;

          const weightList = document.getElementById("weight-results");
          weightList.innerHTML = `
        <li><strong>${round(weightLb, 0)}</strong> pounds (lb)</li>
        <li><strong>${round(weightShortTons, 2)}</strong> short tons (US)</li>
        <li><strong>${round(weightKg, 0)}</strong> kilograms (kg)</li>
        <li><strong>${round(
          weightMetricTonnes,
          3
        )}</strong> metric tonnes (t)</li>
      `;

          document.getElementById("bags-result").textContent = bagsText;

          const summary = document.getElementById("summary-result");
          const depthDisplay =
            system === "imperial"
              ? `${round(depthFt, 2)} ft`
              : `${round(depthM * 100, 1)} cm`;
          summary.textContent =
            `You need approximately ${round(volYd3, 2)} cubic yards (${round(
              weightShortTons,
              2
            )} US tons) ` +
            `of sand to cover about ${round(areaFt2, 1)} ft² (${round(
              areaM2,
              2
            )} m²) at a compacted depth of ${depthDisplay}, ` +
            `including ${wastePct}% allowance for waste and compaction.`;
        } catch (err) {
          const resultsMain = document.getElementById("results-main");
          resultsMain.classList.remove("hidden");
          document.getElementById("volume-results").innerHTML = "";
          document.getElementById("weight-results").innerHTML = "";
          document.getElementById("bags-result").textContent = "";
          document.getElementById("summary-result").textContent = err.message;
        }
      });

      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", (!expanded).toString());
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
