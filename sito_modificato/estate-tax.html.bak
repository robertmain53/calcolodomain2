    <script>
      // Simple money formatter
      function fmtMoney(value) {
        if (isNaN(value)) return "$0";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        return (
          sign +
          abs.toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }

      function fmtPercent(value) {
        if (isNaN(value)) return "0%";
        return value.toFixed(0) + "%";
      }

      const yearParams = {
        2024: { exemption: 13610000, rate: 40 },
        2025: { exemption: 13610000, rate: 40 }, // placeholder; user can override via Custom
      };

      function getParams() {
        const year = document.getElementById("valuation-year").value;
        if (year === "custom") {
          const ex =
            parseFloat(document.getElementById("custom-exemption").value) || 0;
          const rate =
            parseFloat(document.getElementById("custom-rate").value) || 0;
          return { exemption: ex, rate: rate };
        }
        return yearParams[year] || yearParams[2024];
      }

      function recalcEstateTax() {
        const gross =
          parseFloat(document.getElementById("gross-estate").value) || 0;
        const debts =
          parseFloat(document.getElementById("debts-expenses").value) || 0;
        const charity =
          parseFloat(document.getElementById("charitable-bequests").value) || 0;
        const maritalStatus = document.getElementById("marital-status").value;
        const toSpouse =
          parseFloat(document.getElementById("to-spouse").value) || 0;
        const priorGifts =
          parseFloat(document.getElementById("prior-taxable-gifts").value) || 0;
        const portability = document.getElementById(
          "portability-elected"
        ).checked;
        const dsue = portability
          ? parseFloat(document.getElementById("dsue-amount").value) || 0
          : 0;

        const params = getParams();
        let baseExemption = params.exemption || 0;
        const rate = params.rate || 0;

        // Marital deduction: only for U.S. citizen spouse
        let maritalDeduction = 0;
        if (maritalStatus === "married-us") {
          maritalDeduction = Math.min(toSpouse, gross); // cannot exceed estate
        } else {
          maritalDeduction = 0; // simplified: no unlimited marital deduction for noncitizen spouse
        }

        // Taxable estate before exemption
        let taxableBeforeExemption = gross - debts - charity - maritalDeduction;
        if (taxableBeforeExemption < 0) taxableBeforeExemption = 0;

        const totalTransfers = taxableBeforeExemption + priorGifts;

        // Total exemption (base + DSUE)
        let totalExemption = baseExemption + dsue;
        if (totalExemption < 0) totalExemption = 0;

        const taxableAfterExemption = Math.max(
          0,
          totalTransfers - totalExemption
        );
        const estateTax = taxableAfterExemption * (rate / 100);

        // Update outputs
        document.getElementById("out-gross-estate").textContent =
          fmtMoney(gross);
        document.getElementById("out-deductions").textContent = fmtMoney(
          debts + charity + maritalDeduction
        );
        document.getElementById("out-taxable-before-exemption").textContent =
          fmtMoney(taxableBeforeExemption);
        document.getElementById("out-prior-gifts").textContent =
          fmtMoney(priorGifts);
        document.getElementById("out-total-transfers").textContent =
          fmtMoney(totalTransfers);

        document.getElementById("out-base-exemption").textContent =
          fmtMoney(baseExemption);
        document.getElementById("out-dsue").textContent = fmtMoney(dsue);
        document.getElementById("out-total-exemption").textContent =
          fmtMoney(totalExemption);
        document.getElementById("out-taxable-after-exemption").textContent =
          fmtMoney(taxableAfterExemption);
        document.getElementById("out-rate").textContent = fmtPercent(rate);
        document.getElementById("out-estate-tax").textContent =
          fmtMoney(estateTax);

        const noteEl = document.getElementById("planning-note");
        if (estateTax <= 0) {
          noteEl.textContent =
            "Based on the values entered, your estate is not projected to owe federal estate tax under the selected exemption and rate. State estate or inheritance taxes may still apply.";
        } else {
          noteEl.textContent =
            "Based on the values entered, your estate is projected to owe federal estate tax. Consider speaking with an estate planning attorney or tax professional about strategies to manage this exposure.";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const yearSelect = document.getElementById("valuation-year");
        const customParams = document.getElementById("custom-params");
        const maritalStatus = document.getElementById("marital-status");
        const portabilityCheckbox = document.getElementById(
          "portability-elected"
        );
        const dsueWrapper = document.getElementById("dsue-wrapper");

        yearSelect.addEventListener("change", function () {
          if (this.value === "custom") {
            customParams.classList.remove("hidden");
          } else {
            customParams.classList.add("hidden");
          }
          recalcEstateTax();
        });

        maritalStatus.addEventListener("change", function () {
          // Portability only relevant if married to U.S. citizen
          if (this.value === "married-us") {
            document
              .getElementById("portability-row")
              .classList.remove("hidden");
          } else {
            document.getElementById("portability-row").classList.add("hidden");
          }
          recalcEstateTax();
        });

        portabilityCheckbox.addEventListener("change", function () {
          if (this.checked) {
            dsueWrapper.classList.remove("hidden");
          } else {
            dsueWrapper.classList.add("hidden");
          }
          recalcEstateTax();
        });

        // Recalculate on input changes for instant feedback
        [
          "gross-estate",
          "debts-expenses",
          "charitable-bequests",
          "to-spouse",
          "prior-taxable-gifts",
          "custom-exemption",
          "custom-rate",
          "dsue-amount",
        ].forEach(function (id) {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", recalcEstateTax);
          }
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            recalcEstateTax();
          });

        // Initialize defaults
        document.getElementById("custom-exemption").value =
          yearParams[2025].exemption;
        document.getElementById("custom-rate").value = yearParams[2025].rate;
        recalcEstateTax();
      });

      // Mobile menu script (from template)
    </script>

