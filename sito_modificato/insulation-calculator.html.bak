    <script>
      // Material R per inch (imperial). For metric we convert thickness but keep same R-per-inch basis.
      const MATERIAL_DATA = {
        fiberglassBatt: {
          rPerInch: 3.4,
          hint: "Typical fiberglass batt or roll: ~R-3.2 to R-3.7 per inch.",
        },
        fiberglassBlown: {
          rPerInch: 2.7,
          hint: "Loose-fill fiberglass: ~R-2.2 to R-2.9 per inch depending on density.",
        },
        celluloseBlown: {
          rPerInch: 3.5,
          hint: "Loose-fill cellulose: ~R-3.2 to R-3.8 per inch.",
        },
        mineralWool: {
          rPerInch: 4.0,
          hint: "Mineral wool batts: ~R-3.7 to R-4.3 per inch.",
        },
        sprayFoamOpen: {
          rPerInch: 3.7,
          hint: "Open-cell spray foam: ~R-3.5 to R-3.8 per inch.",
        },
        sprayFoamClosed: {
          rPerInch: 6.5,
          hint: "Closed-cell spray foam: ~R-6.0 to R-7.0 per inch.",
        },
        custom: {
          rPerInch: null,
          hint: "Enter the manufacturer-specified R-value per inch (or per 25 mm in metric).",
        },
      };

      const unitSystemEl = document.getElementById("unitSystem");
      const thicknessUnitLabel = document.getElementById("thicknessUnitLabel");
      const coverageUnitLabel = document.getElementById("coverageUnitLabel");
      const materialTypeEl = document.getElementById("materialType");
      const materialHintEl = document.getElementById("materialHint");
      const customRContainer = document.getElementById("customRContainer");

      const areasContainer = document.getElementById("areasContainer");
      const openingsContainer = document.getElementById("openingsContainer");

      function createDimRow(type, index) {
        const isArea = type === "area";
        const wrapper = document.createElement("div");
        wrapper.className = "grid grid-cols-12 gap-2 items-end";
        wrapper.dataset.type = type;

        const labelText = isArea ? `Area ${index + 1}` : `Opening ${index + 1}`;

        wrapper.innerHTML = `
      <div class="col-span-12 sm:col-span-4">
        <label class="block text-xs font-medium text-gray-700 mb-1">${labelText} length</label>
        <input type="number" min="0" step="0.01" class="dim-length w-full border rounded-md px-2 py-1.5" placeholder="Length">
      </div>
      <div class="col-span-12 sm:col-span-4">
        <label class="block text-xs font-medium text-gray-700 mb-1">${labelText} width</label>
        <input type="number" min="0" step="0.01" class="dim-width w-full border rounded-md px-2 py-1.5" placeholder="Width">
      </div>
      <div class="col-span-8 sm:col-span-3">
        <label class="block text-xs font-medium text-gray-700 mb-1">Notes (optional)</label>
        <input type="text" class="w-full border rounded-md px-2 py-1.5 text-xs dim-notes" placeholder="${
          isArea ? "e.g. North wall" : "e.g. Garage door"
        }">
      </div>
      <div class="col-span-4 sm:col-span-1 flex justify-end">
        <button type="button" class="remove-row text-xs text-red-600 hover:underline mt-5">Remove</button>
      </div>
    `;
        return wrapper;
      }

      function refreshDimLabels() {
        const unit = unitSystemEl.value === "imperial" ? "ft" : "m";
        areasContainer
          .querySelectorAll('[data-type="area"]')
          .forEach((row, idx) => {
            const labels = row.querySelectorAll("label");
            labels[0].innerHTML = `Area ${
              idx + 1
            } length <span class="text-gray-400 text-[10px]">(${unit})</span>`;
            labels[1].innerHTML = `Area ${
              idx + 1
            } width <span class="text-gray-400 text-[10px]">(${unit})</span>`;
          });
        openingsContainer
          .querySelectorAll('[data-type="opening"]')
          .forEach((row, idx) => {
            const labels = row.querySelectorAll("label");
            labels[0].innerHTML = `Opening ${
              idx + 1
            } length <span class="text-gray-400 text-[10px]">(${unit})</span>`;
            labels[1].innerHTML = `Opening ${
              idx + 1
            } width <span class="text-gray-400 text-[10px]">(${unit})</span>`;
          });
      }

      document.getElementById("addAreaBtn").addEventListener("click", () => {
        const idx =
          areasContainer.querySelectorAll('[data-type="area"]').length;
        const row = createDimRow("area", idx);
        areasContainer.appendChild(row);
        refreshDimLabels();
      });

      document.getElementById("addOpeningBtn").addEventListener("click", () => {
        const idx = openingsContainer.querySelectorAll(
          '[data-type="opening"]'
        ).length;
        const row = createDimRow("opening", idx);
        openingsContainer.appendChild(row);
        refreshDimLabels();
      });

      [areasContainer, openingsContainer].forEach((container) => {
        container.addEventListener("click", (e) => {
          if (e.target.classList.contains("remove-row")) {
            const row = e.target.closest("[data-type]");
            const type = row.dataset.type;
            row.remove();
            if (type === "area") {
              refreshDimLabels();
            } else {
              refreshDimLabels();
            }
          }
        });
      });

      function updateUnits() {
        const isImperial = unitSystemEl.value === "imperial";
        thicknessUnitLabel.textContent = isImperial ? "(in)" : "(cm)";
        coverageUnitLabel.textContent = isImperial
          ? "(ft² at installed thickness)"
          : "(m² at installed thickness)";
        refreshDimLabels();
      }

      unitSystemEl.addEventListener("change", updateUnits);

      function updateMaterialHint() {
        const key = materialTypeEl.value;
        const data = MATERIAL_DATA[key];
        materialHintEl.textContent = data ? data.hint : "";
        customRContainer.classList.toggle("hidden", key !== "custom");
      }

      materialTypeEl.addEventListener("change", updateMaterialHint);

      function getNumber(val) {
        const n = parseFloat(val);
        return isNaN(n) ? 0 : n;
      }

      function sumAreas(container) {
        const isImperial = unitSystemEl.value === "imperial";
        let total = 0;
        container.querySelectorAll("[data-type]").forEach((row) => {
          const len = getNumber(row.querySelector(".dim-length").value);
          const wid = getNumber(row.querySelector(".dim-width").value);
          if (len > 0 && wid > 0) {
            total += len * wid; // ft² or m² depending on units
          }
        });
        return total;
      }

      function calcRPerInch() {
        const key = materialTypeEl.value;
        if (key === "custom") {
          const customVal = getNumber(
            document.getElementById("customRPerInch").value
          );
          return customVal > 0 ? customVal : null;
        }
        const data = MATERIAL_DATA[key];
        return data ? data.rPerInch : null;
      }

      document.getElementById("calcBtn").addEventListener("click", () => {
        const errorEl = document.getElementById("calcError");
        errorEl.textContent = "";

        const grossArea = sumAreas(areasContainer);
        if (grossArea <= 0) {
          errorEl.textContent =
            "Please add at least one area with valid dimensions.";
          return;
        }
        const openingsArea = sumAreas(openingsContainer);
        const netArea = Math.max(grossArea - openingsArea, 0);

        const thicknessInput = getNumber(
          document.getElementById("thickness").value
        );
        if (thicknessInput <= 0) {
          errorEl.textContent = "Please enter a positive insulation thickness.";
          return;
        }

        const isImperial = unitSystemEl.value === "imperial";
        // Convert thickness to inches for R-per-inch calculation
        const thicknessInches = isImperial
          ? thicknessInput
          : thicknessInput / 2.54;

        const rPerInch = calcRPerInch();
        if (!rPerInch) {
          errorEl.textContent =
            "Please enter a valid R-value per inch for the selected material.";
          return;
        }
        const totalR = rPerInch * thicknessInches;

        const targetR = getNumber(document.getElementById("targetR").value);

        // Package calculations
        const packageType = document.getElementById("packageType").value;
        const coveragePerPackInput = getNumber(
          document.getElementById("coveragePerPack").value
        );
        const wastePercent = Math.max(
          0,
          getNumber(document.getElementById("wastePercent").value)
        );

        const resultsSection = document.getElementById("resultsSection");
        const packagesRow = document.getElementById("packagesRow");

        // Output area units
        const areaUnit = isImperial ? "ft²" : "m²";

        document.getElementById(
          "grossAreaOut"
        ).textContent = `${grossArea.toFixed(2)} ${areaUnit}`;
        document.getElementById(
          "openingsAreaOut"
        ).textContent = `${openingsArea.toFixed(2)} ${areaUnit}`;
        document.getElementById("netAreaOut").textContent = `${netArea.toFixed(
          2
        )} ${areaUnit}`;

        document.getElementById(
          "rPerInchOut"
        ).textContent = `R-${rPerInch.toFixed(2)} per inch`;
        document.getElementById("totalROut").textContent = `R-${totalR.toFixed(
          1
        )}`;

        const targetRCompare = document.getElementById("targetRCompare");
        if (targetR > 0) {
          const diff = totalR - targetR;
          const badge = document.createElement("span");
          badge.className = "badge";
          if (Math.abs(diff) < 1) {
            badge.textContent = `≈ R-${targetR.toFixed(0)} (meets target)`;
            badge.classList.add(
              "bg-green-100",
              "text-green-700",
              "border",
              "border-green-200"
            );
          } else if (diff > 0) {
            badge.textContent = `Above target by ~R-${diff.toFixed(1)}`;
            badge.classList.add(
              "bg-green-50",
              "text-green-700",
              "border",
              "border-green-200"
            );
          } else {
            badge.textContent = `Below target by ~R-${Math.abs(diff).toFixed(
              1
            )}`;
            badge.classList.add(
              "bg-yellow-50",
              "text-yellow-700",
              "border",
              "border-yellow-200"
            );
          }
          targetRCompare.innerHTML = "";
          targetRCompare.appendChild(badge);
        } else {
          targetRCompare.textContent = "Not set";
        }

        // Packages
        if (packageType !== "none" && coveragePerPackInput > 0 && netArea > 0) {
          const adjArea = netArea * (1 + wastePercent / 100);
          const coveragePerPack = coveragePerPackInput; // already in ft² or m²
          const rawPacks = adjArea / coveragePerPack;
          const packs = Math.ceil(rawPacks);

          document.getElementById(
            "adjAreaOut"
          ).textContent = `${adjArea.toFixed(2)} ${areaUnit}`;
          document.getElementById(
            "coveragePerPackOut"
          ).textContent = `${coveragePerPack.toFixed(
            2
          )} ${areaUnit} per ${packageType}`;
          document.getElementById(
            "packagesOut"
          ).textContent = `${packs} ${packageType}${packs !== 1 ? "s" : ""}`;

          const packageNote = document.getElementById("packageNote");
          packageNote.textContent = `Includes a ${wastePercent.toFixed(
            0
          )}% waste factor and rounds up to whole ${packageType}s. Always compare with manufacturer coverage charts for your target R-value.`;

          packagesRow.classList.remove("hidden");
        } else {
          packagesRow.classList.add("hidden");
        }

        resultsSection.classList.remove("hidden");
      });

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("appType").value = "attic";
        unitSystemEl.value = "imperial";
        document.getElementById("targetR").value = "";
        areasContainer.innerHTML = "";
        openingsContainer.innerHTML = "";
        document.getElementById("thickness").value = "";
        document.getElementById("customRPerInch").value = "";
        materialTypeEl.value = "fiberglassBatt";
        document.getElementById("packageType").value = "bag";
        document.getElementById("coveragePerPack").value = "";
        document.getElementById("wastePercent").value = "10";
        document.getElementById("calcError").textContent = "";
        document.getElementById("resultsSection").classList.add("hidden");
        document.getElementById("packagesRow").classList.add("hidden");
        updateUnits();
        updateMaterialHint();
      });

      // Initialize defaults
      (function init() {
        updateUnits();
        updateMaterialHint();
        // Start with one area row
        document.getElementById("addAreaBtn").click();
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
