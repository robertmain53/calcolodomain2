    <script>
      // Trip cost calculator logic
      (function () {
        const $ = (id) => document.getElementById(id);

        const distanceEl = $("distance");
        const distanceUnitEl = $("distanceUnit");
        const travelersEl = $("travelers");
        const fuelModeEl = $("fuelMode");
        const mpgEl = $("mpg");
        const l100El = $("l100");
        const mpgGroup = $("mpgGroup");
        const l100Group = $("l100Group");
        const fuelPriceEl = $("fuelPrice");
        const fuelPriceUnitEl = $("fuelPriceUnit");
        const nightsEl = $("nights");
        const lodgingPerNightEl = $("lodgingPerNight");
        const foodPerDayPerPersonEl = $("foodPerDayPerPerson");
        const avgSpeedEl = $("avgSpeed");
        const speedUnitEl = $("speedUnit");
        const tripDaysOverrideEl = $("tripDaysOverride");
        const otherDailyPerPersonEl = $("otherDailyPerPerson");
        const tollsEl = $("tolls");
        const parkingEl = $("parking");
        const otherFixedEl = $("otherFixed");
        const errorMsgEl = $("errorMsg");

        const totalCostEl = $("totalCost");
        const totalCostNoteEl = $("totalCostNote");
        const perPersonCostEl = $("perPersonCost");
        const perPersonNoteEl = $("perPersonNote");
        const fuelCostEl = $("fuelCost");
        const fuelDetailsEl = $("fuelDetails");
        const lodgingFoodCostEl = $("lodgingFoodCost");
        const lodgingFoodDetailsEl = $("lodgingFoodDetails");
        const extrasCostEl = $("extrasCost");
        const extrasDetailsEl = $("extrasDetails");
        const timeSummaryEl = $("timeSummary");

        function formatCurrency(value) {
          if (!isFinite(value)) return "—";
          if (Math.abs(value) < 0.005) return "0.00";
          return value.toFixed(2);
        }

        function parseOrZero(el) {
          const v = parseFloat(el.value);
          return isNaN(v) ? 0 : v;
        }

        fuelModeEl.addEventListener("change", () => {
          if (fuelModeEl.value === "mpg") {
            mpgGroup.classList.remove("hidden");
            l100Group.classList.add("hidden");
          } else {
            mpgGroup.classList.add("hidden");
            l100Group.classList.remove("hidden");
          }
        });

        $("calculateBtn").addEventListener("click", () => {
          errorMsgEl.textContent = "";

          const distance = parseFloat(distanceEl.value);
          const travelers = parseFloat(travelersEl.value);

          if (!distance || distance <= 0) {
            errorMsgEl.textContent = "Please enter a positive trip distance.";
            return;
          }
          if (!travelers || travelers <= 0) {
            errorMsgEl.textContent = "Please enter at least one traveler.";
            return;
          }

          // Distance to miles
          let miles = distance;
          if (distanceUnitEl.value === "km") {
            miles = distance * 0.621371;
          }

          // Fuel economy to MPG
          let mpg;
          if (fuelModeEl.value === "mpg") {
            mpg = parseFloat(mpgEl.value);
            if (!mpg || mpg <= 0) {
              errorMsgEl.textContent =
                "Please enter a valid fuel economy (MPG).";
              return;
            }
          } else {
            const l100 = parseFloat(l100El.value);
            if (!l100 || l100 <= 0) {
              errorMsgEl.textContent =
                "Please enter a valid fuel economy (L/100 km).";
              return;
            }
            mpg = 235.215 / l100;
          }

          // Fuel price to per gallon
          const fuelPriceInput = parseFloat(fuelPriceEl.value);
          if (!fuelPriceInput || fuelPriceInput < 0) {
            errorMsgEl.textContent = "Please enter a valid fuel price.";
            return;
          }
          let pricePerGallon;
          if (fuelPriceUnitEl.value === "per_gallon") {
            pricePerGallon = fuelPriceInput;
          } else {
            // per liter
            pricePerGallon = fuelPriceInput * 3.78541;
          }

          // Fuel calculations
          const gallonsNeeded = miles / mpg;
          const fuelCost = gallonsNeeded * pricePerGallon;

          // Time & days
          let drivingHours = 0;
          const avgSpeed = parseFloat(avgSpeedEl.value);
          if (avgSpeed && avgSpeed > 0) {
            let speedMph = avgSpeed;
            if (speedUnitEl.value === "kph") {
              speedMph = avgSpeed * 0.621371;
            }
            drivingHours = miles / speedMph;
          }

          let tripDays;
          const overrideDays = parseFloat(tripDaysOverrideEl.value);
          if (overrideDays && overrideDays > 0) {
            tripDays = overrideDays;
          } else {
            const nights = parseOrZero(nightsEl);
            const drivingDays = drivingHours > 0 ? drivingHours / 8 : 0; // assume 8h driving per day
            tripDays = Math.max(drivingDays, nights || 0);
            if (tripDays === 0) {
              tripDays = 1; // at least a day trip
            }
          }

          // Lodging & food
          const nights = parseOrZero(nightsEl);
          const lodgingPerNight = parseOrZero(lodgingPerNightEl);
          const lodgingCost = nights * lodgingPerNight;

          const foodPerDayPerPerson = parseOrZero(foodPerDayPerPersonEl);
          const foodCost = tripDays * foodPerDayPerPerson * travelers;

          const otherDailyPerPerson = parseOrZero(otherDailyPerPersonEl);
          const otherDailyCost = tripDays * otherDailyPerPerson * travelers;

          // Extras
          const tolls = parseOrZero(tollsEl);
          const parking = parseOrZero(parkingEl);
          const otherFixed = parseOrZero(otherFixedEl);
          const extras = tolls + parking + otherFixed;

          const total =
            fuelCost + lodgingCost + foodCost + otherDailyCost + extras;
          const perPerson = total / travelers;

          // Update UI
          totalCostEl.textContent = formatCurrency(total);
          totalCostNoteEl.textContent =
            "Total estimated out-of-pocket cost for the whole trip.";

          perPersonCostEl.textContent = formatCurrency(perPerson);
          perPersonNoteEl.textContent = `Each of the ${travelers} traveler(s) would pay this amount if you split everything evenly.`;

          fuelCostEl.textContent = formatCurrency(fuelCost);
          const gallonsStr = gallonsNeeded.toFixed(2);
          fuelDetailsEl.textContent =
            `Approx. ${gallonsStr} gallons needed at ${formatCurrency(
              pricePerGallon
            )} per gallon (distance ${miles.toFixed(1)} mi, ` +
            `${mpg.toFixed(1)} MPG).`;

          const lodgingFoodTotal = lodgingCost + foodCost + otherDailyCost;
          lodgingFoodCostEl.textContent = formatCurrency(lodgingFoodTotal);
          const parts = [];
          if (lodgingCost > 0)
            parts.push(`lodging ${formatCurrency(lodgingCost)}`);
          if (foodCost > 0) parts.push(`food ${formatCurrency(foodCost)}`);
          if (otherDailyCost > 0)
            parts.push(`other daily ${formatCurrency(otherDailyCost)}`);
          lodgingFoodDetailsEl.textContent = parts.length
            ? parts.join(", ")
            : "No lodging or daily costs entered.";

          extrasCostEl.textContent = formatCurrency(extras);
          const extrasParts = [];
          if (tolls > 0) extrasParts.push(`tolls ${formatCurrency(tolls)}`);
          if (parking > 0)
            extrasParts.push(`parking ${formatCurrency(parking)}`);
          if (otherFixed > 0)
            extrasParts.push(`other fixed ${formatCurrency(otherFixed)}`);
          extrasDetailsEl.textContent = extrasParts.length
            ? extrasParts.join(", ")
            : "No extra fixed costs entered.";

          if (drivingHours > 0) {
            const hours = Math.floor(drivingHours);
            const minutes = Math.round((drivingHours - hours) * 60);
            timeSummaryEl.textContent =
              `Estimated driving time: about ${hours} h ${minutes} min. ` +
              `Estimated trip length: ${tripDays.toFixed(1)} day(s).`;
          } else {
            timeSummaryEl.textContent =
              `Trip length estimated as ${tripDays.toFixed(1)} day(s). ` +
              `Enter an average speed to also estimate driving hours.`;
          }
        });

        $("resetBtn").addEventListener("click", () => {
          setTimeout(() => {
            errorMsgEl.textContent = "";
            totalCostEl.textContent = "—";
            totalCostNoteEl.textContent =
              "Enter your trip details and click “Calculate”.";
            perPersonCostEl.textContent = "—";
            perPersonNoteEl.textContent = "Based on the number of travelers.";
            fuelCostEl.textContent = "—";
            fuelDetailsEl.textContent = "";
            lodgingFoodCostEl.textContent = "—";
            lodgingFoodDetailsEl.textContent = "";
            extrasCostEl.textContent = "—";
            extrasDetailsEl.textContent = "";
            timeSummaryEl.textContent =
              "Driving time and days will appear here after calculation.";
          }, 0);
        });
      })();
    </script>

