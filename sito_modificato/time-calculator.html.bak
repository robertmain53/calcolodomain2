    <script>
      // Tab switching
      document.querySelectorAll(".time-mode-tab").forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.dataset.mode;
          document.querySelectorAll(".time-mode-tab").forEach((b) => {
            b.classList.remove("border-blue-600", "text-blue-600");
            b.classList.add("border-transparent", "text-gray-600");
          });
          btn.classList.add("border-blue-600", "text-blue-600");
          btn.classList.remove("text-gray-600");

          document
            .querySelectorAll(".time-mode-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById("panel-" + mode).classList.remove("hidden");
        });
      });

      // Utility functions
      function hmsToSeconds(h, m, s) {
        h = Number(h) || 0;
        m = Number(m) || 0;
        s = Number(s) || 0;
        return h * 3600 + m * 60 + s;
      }

      function secondsToHMS(totalSeconds) {
        const sign = totalSeconds < 0 ? -1 : 1;
        let sec = Math.abs(Math.round(totalSeconds));
        const h = Math.floor(sec / 3600);
        sec -= h * 3600;
        const m = Math.floor(sec / 60);
        sec -= m * 60;
        const s = sec;
        const pad = (v) => String(v).padStart(2, "0");
        const hms = `${pad(h)}:${pad(m)}:${pad(s)}`;
        return sign < 0 ? "-" + hms : hms;
      }

      function secondsToParts(totalSeconds) {
        const sign = totalSeconds < 0 ? -1 : 1;
        let sec = Math.abs(Math.round(totalSeconds));
        const h = Math.floor(sec / 3600);
        sec -= h * 3600;
        const m = Math.floor(sec / 60);
        sec -= m * 60;
        const s = sec;
        return { sign, h, m, s };
      }

      // Add/Subtract rows
      const rowsContainer = document.getElementById("time-rows-container");
      const addRowBtn = document.getElementById("add-row-btn");
      const clearRowsBtn = document.getElementById("clear-rows-btn");

      function createRow() {
        const row = document.createElement("div");
        row.className = "flex items-center gap-2 text-sm";
        row.innerHTML = `
      <input type="number" min="0" class="input-small w-16 border border-gray-300 rounded-md px-2 py-1 text-right" placeholder="HH">
      <span>:</span>
      <input type="number" min="0" max="59" class="input-small w-16 border border-gray-300 rounded-md px-2 py-1 text-right" placeholder="MM">
      <span>:</span>
      <input type="number" min="0" max="59" class="input-small w-16 border border-gray-300 rounded-md px-2 py-1 text-right" placeholder="SS">
      <button type="button" class="remove-row text-xs text-red-600 hover:underline ml-1">Remove</button>
    `;
        row.querySelector(".remove-row").addEventListener("click", () => {
          if (rowsContainer.children.length > 1) {
            row.remove();
          } else {
            row.querySelectorAll("input").forEach((i) => (i.value = ""));
          }
        });
        return row;
      }

      addRowBtn.addEventListener("click", () => {
        rowsContainer.appendChild(createRow());
      });

      clearRowsBtn.addEventListener("click", () => {
        rowsContainer.innerHTML = "";
        rowsContainer.appendChild(createRow());
        document.getElementById("addsub-result").classList.add("hidden");
      });

      // Initialize with two rows
      rowsContainer.appendChild(createRow());
      rowsContainer.appendChild(createRow());

      // Add/Subtract calculation
      document
        .getElementById("calc-addsub-btn")
        .addEventListener("click", () => {
          const op = document.getElementById("addsub-operation").value;
          const rows = Array.from(rowsContainer.children);
          if (!rows.length) return;

          const secondsList = rows.map((row) => {
            const inputs = row.querySelectorAll("input");
            return hmsToSeconds(
              inputs[0].value,
              inputs[1].value,
              inputs[2].value
            );
          });

          let total;
          if (op === "add") {
            total = secondsList.reduce((a, b) => a + b, 0);
          } else {
            total = secondsList
              .slice(1)
              .reduce((acc, v) => acc - v, secondsList[0] || 0);
          }

          const parts = secondsToParts(total);
          const sign = parts.sign < 0 ? "-" : "";
          const totalSeconds =
            parts.sign * (parts.h * 3600 + parts.m * 60 + parts.s);
          const decimalHours = (totalSeconds / 3600) * parts.sign;

          document.getElementById("addsub-hms").textContent =
            secondsToHMS(total);
          document.getElementById("addsub-decimal").textContent =
            decimalHours.toFixed(4);
          document.getElementById("addsub-minutes").textContent = (
            (totalSeconds / 60) *
            parts.sign
          ).toFixed(2);
          document.getElementById("addsub-seconds").textContent = (
            totalSeconds * parts.sign
          ).toFixed(0);
          document.getElementById("addsub-result").classList.remove("hidden");
        });

      // Duration calculation
      document
        .getElementById("calc-duration-btn")
        .addEventListener("click", () => {
          const start = document.getElementById("start-time").value;
          const end = document.getElementById("end-time").value;
          const crossMidnight = document.getElementById(
            "duration-cross-midnight"
          ).checked;

          if (!start || !end) return;

          const [sh, sm, ss = "0"] = start.split(":");
          const [eh, em, es = "0"] = end.split(":");

          let startSec = hmsToSeconds(sh, sm, ss);
          let endSec = hmsToSeconds(eh, em, es);

          if (crossMidnight && endSec <= startSec) {
            endSec += 24 * 3600;
          }

          let diff = endSec - startSec;

          if (!crossMidnight && diff < 0) {
            // If user forgot to tick cross-midnight, assume next day
            diff += 24 * 3600;
          }

          const decimalHours = diff / 3600;

          document.getElementById("duration-hms").textContent =
            secondsToHMS(diff);
          document.getElementById("duration-decimal").textContent =
            decimalHours.toFixed(4);
          document.getElementById("duration-minutes").textContent = (
            diff / 60
          ).toFixed(2);
          document.getElementById("duration-seconds").textContent =
            diff.toFixed(0);
          document.getElementById("duration-result").classList.remove("hidden");
        });

      // Converter: HMS -> decimal
      document.getElementById("conv-hms-btn").addEventListener("click", () => {
        const h = document.getElementById("conv-h").value;
        const m = document.getElementById("conv-m").value;
        const s = document.getElementById("conv-s").value;
        const sec = hmsToSeconds(h, m, s);
        const dec = sec / 3600;
        document.getElementById("conv-hms-out").textContent = isNaN(dec)
          ? ""
          : dec.toFixed(4);
      });

      // Converter: decimal -> HMS
      document
        .getElementById("conv-decimal-btn")
        .addEventListener("click", () => {
          const dec = parseFloat(document.getElementById("conv-decimal").value);
          if (isNaN(dec)) {
            document.getElementById("conv-decimal-out").textContent = "";
            return;
          }
          const totalSeconds = Math.round(dec * 3600);
          document.getElementById("conv-decimal-out").textContent =
            secondsToHMS(totalSeconds);
        });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          menu.classList.toggle("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
