    <script>
      // Dividend mode toggling
      const dividendModeEl = document.getElementById("dividend-mode");
      const rowYield = document.getElementById("dividend-yield-row");
      const rowDiscrete = document.getElementById("dividend-discrete-row");

      function updateDividendRows() {
        const mode = dividendModeEl.value;
        rowYield.classList.toggle("hidden", mode !== "yield");
        rowDiscrete.classList.toggle("hidden", mode !== "discrete");
      }
      dividendModeEl.addEventListener("change", updateDividendRows);

      // Core binomial calculation
      function calculateBinomial() {
        const errorEl = document.getElementById("calc-error");
        errorEl.textContent = "";

        const S0 = parseFloat(document.getElementById("spot").value);
        const K = parseFloat(document.getElementById("strike").value);
        const T = parseFloat(document.getElementById("maturity").value);
        const rPct = parseFloat(document.getElementById("rate").value);
        const volPct = parseFloat(document.getElementById("vol").value);
        const N = parseInt(document.getElementById("steps").value, 10);

        const optionType = document.querySelector(
          'input[name="optionType"]:checked'
        ).value;
        const exerciseStyle = document.querySelector(
          'input[name="exerciseStyle"]:checked'
        ).value;
        const divMode = dividendModeEl.value;

        if (!(S0 > 0 && K > 0 && T > 0 && N >= 1 && N <= 500 && volPct >= 0)) {
          errorEl.textContent =
            "Please check that all numeric inputs are positive and steps are between 1 and 500.";
          return null;
        }

        const r = rPct / 100;
        const sigma = volPct / 100;
        const dt = T / N;

        let q = 0;
        let divAmount = 0;
        let divSteps = 0;

        if (divMode === "yield") {
          const qPct = parseFloat(document.getElementById("divYield").value);
          if (isNaN(qPct) || qPct < 0) {
            errorEl.textContent = "Dividend yield must be non‑negative.";
            return null;
          }
          q = qPct / 100;
        } else if (divMode === "discrete") {
          divAmount = parseFloat(document.getElementById("divAmount").value);
          divSteps = parseInt(document.getElementById("divSteps").value, 10);
          if (!(divAmount >= 0 && divSteps >= 1)) {
            errorEl.textContent =
              "Discrete dividend amount must be ≥ 0 and dividend steps ≥ 1.";
            return null;
          }
        }

        // CRR up/down
        const u = Math.exp(sigma * Math.sqrt(dt));
        const d = 1 / u;

        // Risk-neutral probability
        const growth = Math.exp((r - q) * dt);
        const p = (growth - d) / (u - d);

        if (!(p > 0 && p < 1)) {
          errorEl.textContent =
            "Invalid parameter combination: risk‑neutral probability is not between 0 and 1. Try increasing volatility, steps, or adjusting rate/dividends.";
          return null;
        }

        const disc = Math.exp(-r * dt);

        // Build stock price tree and option value tree
        const stock = [];
        const value = [];
        const intrinsic = [];
        const earlyExercise = [];

        for (let n = 0; n <= N; n++) {
          stock[n] = [];
          value[n] = [];
          intrinsic[n] = [];
          earlyExercise[n] = [];
          for (let i = 0; i <= n; i++) {
            let S = S0 * Math.pow(u, i) * Math.pow(d, n - i);

            // Simple discrete dividend: subtract at evenly spaced steps
            if (divMode === "discrete" && divAmount > 0 && divSteps > 0) {
              const interval = Math.max(1, Math.floor(N / divSteps));
              const numDivsPaid = Math.floor(n / interval);
              S = S - divAmount * numDivsPaid;
              if (S < 0) S = 0;
            }

            stock[n][i] = S;
          }
        }

        // Terminal payoffs
        for (let i = 0; i <= N; i++) {
          const S = stock[N][i];
          const pay =
            optionType === "call" ? Math.max(S - K, 0) : Math.max(K - S, 0);
          value[N][i] = pay;
          intrinsic[N][i] = pay;
          earlyExercise[N][i] = false;
        }

        // Backward induction
        for (let n = N - 1; n >= 0; n--) {
          for (let i = 0; i <= n; i++) {
            const cont =
              disc * (p * value[n + 1][i + 1] + (1 - p) * value[n + 1][i]);
            const S = stock[n][i];
            const intr =
              optionType === "call" ? Math.max(S - K, 0) : Math.max(K - S, 0);
            intrinsic[n][i] = intr;

            if (exerciseStyle === "american") {
              if (intr > cont) {
                value[n][i] = intr;
                earlyExercise[n][i] = true;
              } else {
                value[n][i] = cont;
                earlyExercise[n][i] = false;
              }
            } else {
              value[n][i] = cont;
              earlyExercise[n][i] = false;
            }
          }
        }

        return {
          S0,
          K,
          T,
          r,
          sigma,
          N,
          u,
          d,
          p,
          disc,
          stock,
          value,
          intrinsic,
          earlyExercise,
          optionType,
          exerciseStyle,
        };
      }

      function formatNumber(x, decimals) {
        if (x === null || x === undefined || isNaN(x)) return "–";
        return x.toFixed(decimals);
      }

      function renderResults(result) {
        if (!result) return;
        document.getElementById("result-price").textContent = formatNumber(
          result.value[0][0],
          4
        );
        document.getElementById("result-u").textContent = formatNumber(
          result.u,
          4
        );
        document.getElementById("result-d").textContent = formatNumber(
          result.d,
          4
        );
        document.getElementById("result-p").textContent = formatNumber(
          result.p,
          4
        );
        document.getElementById("result-disc").textContent = formatNumber(
          result.disc,
          4
        );

        const styleLabel =
          result.exerciseStyle === "american" ? "American " : "European ";
        const typeLabel = result.optionType === "call" ? "call" : "put";
        document.getElementById("result-style-label").textContent =
          styleLabel +
          typeLabel +
          " option priced with a " +
          result.N +
          "-step binomial tree.";
      }

      function renderTreeTable(result) {
        const tbody = document.getElementById("tree-body");
        tbody.innerHTML = "";

        const rows = [];
        for (let n = 0; n <= result.N; n++) {
          for (let i = 0; i <= n; i++) {
            rows.push({
              step: n,
              up: i,
              S: result.stock[n][i],
              V: result.value[n][i],
              intrinsic: result.intrinsic[n][i],
              early: result.earlyExercise[n][i],
            });
          }
        }

        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "border-b last:border-0";

          const tdStep = document.createElement("td");
          tdStep.className = "px-2 py-1 whitespace-nowrap";
          tdStep.textContent = row.step;

          const tdUp = document.createElement("td");
          tdUp.className = "px-2 py-1 whitespace-nowrap";
          tdUp.textContent = row.up;

          const tdS = document.createElement("td");
          tdS.className = "px-2 py-1 whitespace-nowrap font-mono";
          tdS.textContent = formatNumber(row.S, 4);

          const tdV = document.createElement("td");
          tdV.className = "px-2 py-1 whitespace-nowrap font-mono";
          tdV.textContent = formatNumber(row.V, 4);

          const tdI = document.createElement("td");
          tdI.className = "px-2 py-1 whitespace-nowrap font-mono";
          tdI.textContent = formatNumber(row.intrinsic, 4);

          const tdE = document.createElement("td");
          tdE.className = "px-2 py-1 whitespace-nowrap";
          if (row.early) {
            const span = document.createElement("span");
            span.textContent = "Yes";
            span.className =
              "badge bg-red-100 text-red-700 border border-red-300";
            tdE.appendChild(span);
          } else {
            tdE.textContent = "No";
          }

          tr.appendChild(tdStep);
          tr.appendChild(tdUp);
          tr.appendChild(tdS);
          tr.appendChild(tdV);
          tr.appendChild(tdI);
          tr.appendChild(tdE);

          tbody.appendChild(tr);
        });

        document.getElementById("download-csv-btn").disabled = false;
      }

      function downloadCSV(result) {
        const header = [
          "step",
          "up_moves",
          "stock_price",
          "option_value",
          "intrinsic_value",
          "early_exercise",
        ];
        const lines = [header.join(",")];

        for (let n = 0; n <= result.N; n++) {
          for (let i = 0; i <= n; i++) {
            const row = [
              n,
              i,
              result.stock[n][i],
              result.value[n][i],
              result.intrinsic[n][i],
              result.earlyExercise[n][i] ? "YES" : "NO",
            ];
            lines.push(row.join(","));
          }
        }

        const blob = new Blob([lines.join("\n")], {
          type: "text/csv;charset=utf-8;",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        const ts = new Date().toISOString().slice(0, 19).replace(/[:T]/g, "-");
        a.href = url;
        a.download = `binomial_tree_${ts}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      let lastResult = null;

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const res = calculateBinomial();
        if (!res) return;
        lastResult = res;
        renderResults({
          ...res,
          value: res.value,
        });
        renderTreeTable(res);
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("spot").value = 100;
        document.getElementById("strike").value = 100;
        document.getElementById("maturity").value = 1;
        document.getElementById("rate").value = 5;
        document.getElementById("vol").value = 20;
        document.getElementById("steps").value = 50;
        document.querySelector(
          'input[name="optionType"][value="call"]'
        ).checked = true;
        document.querySelector(
          'input[name="exerciseStyle"][value="european"]'
        ).checked = true;
        dividendModeEl.value = "none";
        updateDividendRows();
        document.getElementById("divYield").value = 2;
        document.getElementById("divAmount").value = 0.5;
        document.getElementById("divSteps").value = 4;
        document.getElementById("calc-error").textContent = "";
        document.getElementById("result-price").textContent = "–";
        document.getElementById("result-u").textContent = "–";
        document.getElementById("result-d").textContent = "–";
        document.getElementById("result-p").textContent = "–";
        document.getElementById("result-disc").textContent = "–";
        document.getElementById("result-style-label").textContent = "";
        document.getElementById("tree-body").innerHTML =
          '<tr><td colspan="6" class="px-3 py-3 text-center text-gray-400">Run a calculation to see the full binomial tree.</td></tr>';
        document.getElementById("download-csv-btn").disabled = true;
        lastResult = null;
      });

      document
        .getElementById("download-csv-btn")
        .addEventListener("click", () => {
          if (!lastResult) return;
          downloadCSV(lastResult);
        });

      // Initialize dividend rows
      updateDividendRows();

