        const AMPHORA_L = 26.0; // approximate amphora volume in litres
        const ROMAN_VOLUME_TO_L = {
          amphora: AMPHORA_L,
          congius: AMPHORA_L / 8,
          sextarius: AMPHORA_L / 48
        };

        function updateVolume() {
          if (!volValue || !volUnit || !volL || !volM3 || !volSextarii) return;
