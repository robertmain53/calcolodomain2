          const base = ROMAN_VOLUME_TO_L[unit] || 0;
          const litres = val * base;
          const m3 = litres / 1000;
          const sextarii = litres / ROMAN_VOLUME_TO_L.sextarius;

          volL.value = formatVal(litres);
          volM3.value = formatVal(m3);
          volSextarii.value = formatVal(sextarii);
        }

        if (volValue && volUnit) {
