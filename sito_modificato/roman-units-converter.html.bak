        const lenUnit = document.getElementById('len-unit');
        const lenM = document.getElementById('len-m');
        const lenKm = document.getElementById('len-km');
        const lenPedes = document.getElementById('len-pedes');
        const lenPresets = document.querySelectorAll('.len-preset');
        const lenClear = document.getElementById('len-clear');

        const ROMAN_LENGTH_TO_M = {
          // base pes = 0.296 m
          uncia: 0.296 / 12,     // Roman inch
          pes: 0.296,            // Roman foot
          cubitum: 0.444,        // cubit
          passus: 1.48,          // 5 pedes
          mille_passus: 1480.0   // Roman mile
        };
        const PES_IN_METERS = 0.296;

        function formatVal(v) {
          if (!isFinite(v)) return '';
          const abs = Math.abs(v);
          if (abs !== 0 && (abs < 1e-4 || abs >= 1e6)) {
            return v.toExponential(6);
          }
          return Number(v.toFixed(6)).toString();
        }

        function updateLength() {
          if (!lenValue || !lenUnit || !lenM || !lenKm || !lenPedes) return;
          const raw = lenValue.value;
          if (raw === '' || isNaN(Number(raw))) {
            lenM.value = '';
            lenKm.value = '';
            lenPedes.value = '';
            return;
          }
          const val = Number(raw);
          const unit = lenUnit.value;
          const factor = ROMAN_LENGTH_TO_M[unit] || 0;
          const meters = val * factor;
          const km = meters / 1000;
          const pedes = meters / PES_IN_METERS;

          lenM.value = formatVal(meters);
          lenKm.value = formatVal(km);
          lenPedes.value = formatVal(pedes);
        }

        if (lenValue && lenUnit) {
          lenValue.addEventListener('input', updateLength);
          lenUnit.addEventListener('change', updateLength);
        }

        lenPresets.forEach(function (btn) {
          btn.addEventListener('click', function () {
            if (!lenValue || !lenUnit) return;
            const val = this.getAttribute('data-value');
            const unit = this.getAttribute('data-unit');
            if (!val || !unit) return;
            lenValue.value = val;
            lenUnit.value = unit;
            updateLength();
          });
        });

        if (lenClear) {
          lenClear.addEventListener('click', function () {
            if (lenValue) lenValue.value = '';
            if (lenM) lenM.value = '';
            if (lenKm) lenKm.value = '';
            if (lenPedes) lenPedes.value = '';
          });
        }

        // ---------- Roman volume units ----------
        const volValue = document.getElementById('vol-value');
