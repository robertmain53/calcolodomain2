            if (!val || !unit) return;
            volValue.value = val;
            volUnit.value = unit;
            updateVolume();
          });
        });

        if (volClear) {
          volClear.addEventListener('click', function () {
            if (volValue) volValue.value = '';
            if (volL) volL.value = '';
            if (volM3) volM3.value = '';
            if (volSextarii) volSextarii.value = '';
          });
        }

        // ---------- Roman weight units ----------
        const massValue = document.getElementById('mass-value');
        const massUnit = document.getElementById('mass-unit');
        const massG = document.getElementById('mass-g');
        const massKg = document.getElementById('mass-kg');
        const massLibrae = document.getElementById('mass-librae');
        const massPresets = document.querySelectorAll('.mass-preset');
        const massClear = document.getElementById('mass-clear');

        const LIBRA_G = 329.0;
        const ROMAN_MASS_TO_G = {
          libra: LIBRA_G,
          uncia: LIBRA_G / 12
        };

