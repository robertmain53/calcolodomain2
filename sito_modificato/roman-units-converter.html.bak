        const btnClearRoman = document.getElementById('btn-clear-roman');
        const btnClearArabic = document.getElementById('btn-clear-arabic');

        const romanValues = { I:1, V:5, X:10, L:50, C:100, D:500, M:1000 };

        function isValidRoman(str) {
          return /^[IVXLCDM]+$/i.test(str);
        }

        function romanToInt(roman) {
          let s = roman.toUpperCase();
          let total = 0;
          let prev = 0;
          for (let i = s.length - 1; i >= 0; i--) {
            const ch = s[i];
            const val = romanValues[ch] || 0;
            if (val < prev) {
              total -= val;
            } else {
              total += val;
              prev = val;
            }
          }
          return total;
        }

        function intToRoman(num) {
          const map = [
            { value: 1000, symbol: 'M' },
            { value: 900, symbol: 'CM' },
            { value: 500, symbol: 'D' },
            { value: 400, symbol: 'CD' },
            { value: 100, symbol: 'C' },
            { value: 90, symbol: 'XC' },
            { value: 50, symbol: 'L' },
            { value: 40, symbol: 'XL' },
            { value: 10, symbol: 'X' },
            { value: 9, symbol: 'IX' },
            { value: 5, symbol: 'V' },
            { value: 4, symbol: 'IV' },
            { value: 1, symbol: 'I' }
          ];
          let result = '';
          let n = num;
          for (const entry of map) {
            while (n >= entry.value) {
              result += entry.symbol;
              n -= entry.value;
            }
          }
          return result;
        }

        function handleRomanToArabic() {
          if (!romanInput || !arabicOutput || !romanError) return;
          const raw = (romanInput.value || '').trim();
          romanError.textContent = '';
          arabicOutput.value = '';

          if (!raw) return;

          if (!isValidRoman(raw)) {
            romanError.textContent = 'Invalid characters. Use I, V, X, L, C, D, M.';
            return;
          }

          const value = romanToInt(raw);
          if (value < 1 || value > 3999) {
            romanError.textContent = 'Value out of supported range (1–3999).';
            return;
          }

          // Round-trip check to catch invalid subtractive patterns
          const canonical = intToRoman(value);
          if (canonical !== raw.toUpperCase()) {
            romanError.textContent = 'Non-standard numeral pattern. Canonical form: ' + canonical;
          }
          arabicOutput.value = String(value);
        }

        function handleArabicToRoman() {
          if (!arabicInput || !romanOutput || !arabicError) return;
          const raw = arabicInput.value;
          arabicError.textContent = '';
          romanOutput.value = '';

          if (!raw) return;
          const n = Number(raw);
          if (!Number.isInteger(n) || n < 1 || n > 3999) {
            arabicError.textContent = 'Enter an integer between 1 and 3999.';
            return;
          }
          romanOutput.value = intToRoman(n);
        }

