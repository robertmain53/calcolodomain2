          const grams = val * base;
          const kg = grams / 1000;
          const librae = grams / LIBRA_G;

          massG.value = formatVal(grams);
          massKg.value = formatVal(kg);
          massLibrae.value = formatVal(librae);
        }

        if (massValue && massUnit) {
          massValue.addEventListener('input', updateMass);
          massUnit.addEventListener('change', updateMass);
        }

        massPresets.forEach(function (btn) {
          btn.addEventListener('click', function () {
            if (!massValue || !massUnit) return;
