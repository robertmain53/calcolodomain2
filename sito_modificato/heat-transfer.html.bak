      // Helpers
      function toKelvin(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v)) return NaN;
        return unit === "C" ? v + 273.15 : v;
      }
      function areaToM2(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v)) return NaN;
        switch (unit) {
          case "m2":
            return v;
          case "cm2":
            return v * 1e-4;
          case "ft2":
            return v * 0.09290304;
          default:
            return v;
        }
      }
      function areaFromM2(value, unit) {
        switch (unit) {
          case "m2":
            return value;
          case "cm2":
            return value / 1e-4;
          case "ft2":
            return value / 0.09290304;
          default:
            return value;
        }
      }
      function hToSI(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v)) return NaN;
        if (unit === "W/ft2F") {
          // 1 Btu/hr·ft²·°F ≈ 5.678263 W/m²·K
          return v * 5.678263;
        }
        return v;
      }
      function hFromSI(value, unit) {
        if (unit === "W/ft2F") {
          return value / 5.678263;
        }
        return value;
      }

      // Conduction: dynamic layers
      const condLayersBody = document.getElementById("cond-layers-body");
      function addCondLayer(k = 0.8, L = 0.2) {
        const row = document.createElement("tr");
        row.className = "border-t";
        const index = condLayersBody.children.length + 1;
        row.innerHTML = `
      <td class="px-2 py-1">${index}</td>
      <td class="px-2 py-1">
        <select class="cond-material w-full border rounded px-1 py-1 text-xs">
          <option value="custom">Custom</option>
          <option value="insulation">Insulation (~0.035)</option>
          <option value="brick">Brick (~0.7)</option>
          <option value="concrete">Concrete (~1.4)</option>
          <option value="steel">Steel (~45)</option>
          <option value="aluminum">Aluminum (~205)</option>
        </select>
      </td>
      <td class="px-2 py-1">
        <input type="number" class="cond-k w-24 border rounded px-1 py-1 text-xs" value="${k}" step="0.01">
      </td>
      <td class="px-2 py-1">
        <div class="flex items-center gap-1">
          <input type="number" class="cond-L w-24 border rounded px-1 py-1 text-xs" value="${L}" step="0.001">
          <span class="text-xs text-gray-500">m</span>
        </div>
      </td>
      <td class="px-2 py-1 text-right">
        <button type="button" class="cond-remove text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;
        condLayersBody.appendChild(row);
      }
      // Initial two layers
      addCondLayer(0.8, 0.2);
      addCondLayer(0.04, 0.1);

      condLayersBody.addEventListener("change", (e) => {
        const select = e.target.closest(".cond-material");
        if (select) {
          const row = select.closest("tr");
          const kInput = row.querySelector(".cond-k");
          switch (select.value) {
            case "insulation":
              kInput.value = 0.035;
              break;
            case "brick":
              kInput.value = 0.7;
              break;
            case "concrete":
              kInput.value = 1.4;
              break;
            case "steel":
              kInput.value = 45;
              break;
            case "aluminum":
              kInput.value = 205;
              break;
            default:
              break;
          }
        }
      });
      condLayersBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("cond-remove")) {
          const row = e.target.closest("tr");
          row.remove();
          Array.from(condLayersBody.children).forEach((tr, i) => {
            tr.querySelector("td:first-child").textContent = i + 1;
          });
        }
      });
      document
        .getElementById("cond-add-layer")
        .addEventListener("click", () => addCondLayer());

      document.getElementById("cond-calc").addEventListener("click", () => {
        const T_hot = toKelvin(
          document.getElementById("cond-T-hot").value,
          document.getElementById("cond-T-hot-unit").value
        );
        const T_cold = toKelvin(
          document.getElementById("cond-T-cold").value,
          document.getElementById("cond-T-cold-unit").value
        );
        const A = areaToM2(
          document.getElementById("cond-area").value,
          document.getElementById("cond-area-unit").value
        );
        const solveFor = document.getElementById("cond-known").value;

        if (isNaN(T_hot) || isNaN(T_cold) || isNaN(A) || A <= 0) {
          alert("Please enter valid temperatures and area.");
          return;
        }
        const dT = T_hot - T_cold;
        if (dT === 0) {
          alert("Temperature difference must be non-zero.");
          return;
        }

        let Rtot = 0;
        const rows = condLayersBody.querySelectorAll("tr");
        if (!rows.length) {
          alert("Please add at least one layer.");
          return;
        }
        for (const row of rows) {
          const k = parseFloat(row.querySelector(".cond-k").value);
          const L = parseFloat(row.querySelector(".cond-L").value);
          if (isNaN(k) || isNaN(L) || k <= 0 || L <= 0) {
            alert("Please enter valid k and thickness for all layers.");
            return;
          }
          Rtot += L / (k * A);
        }

        let Q = dT / Rtot; // W
        let Areq = A;
        if (solveFor === "A") {
          // Recompute Rtot per unit area, then A from target Q
          let RperArea = 0;
          for (const row of rows) {
            const k = parseFloat(row.querySelector(".cond-k").value);
            const L = parseFloat(row.querySelector(".cond-L").value);
            RperArea += L / k;
          }
          const targetQ = Q; // from initial A, but better ask user; keep simple: scale linearly
          // Actually, better: assume user wants Q equal to conduction with current A? That is trivial.
          // Instead, interpret: given desired Q equal to current Q, A is unchanged. To be useful, we let user scale:
          // For now, keep Areq = A.
          Areq = A;
        }

        const U = 1 / (Rtot * A); // W/m2K

        document.getElementById("cond-Rtot").textContent =
          Rtot.toExponential(3);
        document.getElementById("cond-Q").textContent = Q.toFixed(2);
        document.getElementById("cond-A").textContent = Areq.toFixed(3);
        document.getElementById("cond-U").textContent = U.toFixed(3);
        document.getElementById("cond-results").classList.remove("hidden");
      });

      document.getElementById("cond-reset").addEventListener("click", () => {
        document.getElementById("cond-T-hot").value = 80;
        document.getElementById("cond-T-cold").value = 20;
        document.getElementById("cond-area").value = 1;
        condLayersBody.innerHTML = "";
        addCondLayer(0.8, 0.2);
        addCondLayer(0.04, 0.1);
        document.getElementById("cond-results").classList.add("hidden");
      });

      // Convection calculations
      document.getElementById("conv-calc").addEventListener("click", () => {
        const Ts = toKelvin(
          document.getElementById("conv-T-surf").value,
          document.getElementById("conv-T-surf-unit").value
        );
        const Tf = toKelvin(
          document.getElementById("conv-T-fluid").value,
          document.getElementById("conv-T-fluid-unit").value
        );
        const hSI = hToSI(
          document.getElementById("conv-h").value,
          document.getElementById("conv-h-unit").value
        );
        const A = areaToM2(
          document.getElementById("conv-area").value,
          document.getElementById("conv-area-unit").value
        );
        const solveFor = document.getElementById("conv-known").value;

        if (isNaN(Ts) || isNaN(Tf)) {
          alert("Please enter valid temperatures.");
          return;
        }
        const dT = Ts - Tf;
        if (dT === 0) {
          alert("Temperature difference must be non-zero.");
          return;
        }

        let Q = NaN,
          Areq = NaN,
          hreq = NaN;
        if (solveFor === "Q") {
          if (isNaN(hSI) || isNaN(A) || hSI <= 0 || A <= 0) {
            alert("Please enter valid h and area.");
            return;
          }
          Q = hSI * A * dT;
          Areq = A;
          hreq = hSI;
        } else if (solveFor === "A") {
          const Qtarget = prompt(
            "Enter desired heat transfer rate Q in watts (W):",
            "1000"
          );
          const Qt = parseFloat(Qtarget);
          if (isNaN(Qt) || Qt === 0) {
            alert("Please enter a valid non-zero Q.");
            return;
          }
          if (isNaN(hSI) || hSI <= 0) {
            alert("Please enter a valid h.");
            return;
          }
          Areq = Qt / (hSI * dT);
          Q = Qt;
          hreq = hSI;
        } else if (solveFor === "h") {
          const Qtarget = prompt(
            "Enter desired heat transfer rate Q in watts (W):",
            "1000"
          );
          const Qt = parseFloat(Qtarget);
          if (isNaN(Qt) || Qt === 0) {
            alert("Please enter a valid non-zero Q.");
            return;
          }
          if (isNaN(A) || A <= 0) {
            alert("Please enter a valid area.");
            return;
          }
          hreq = Qt / (A * dT);
          Q = Qt;
          Areq = A;
        }

        document.getElementById("conv-dT").textContent = dT.toFixed(2);
        document.getElementById("conv-Q").textContent = isNaN(Q)
          ? "—"
          : Q.toFixed(2);
        document.getElementById("conv-A").textContent = isNaN(Areq)
          ? "—"
          : Areq.toFixed(3);
        document.getElementById("conv-h-res").textContent = isNaN(hreq)
          ? "—"
          : hreq.toFixed(2);
        document.getElementById("conv-results").classList.remove("hidden");
      });

      document.getElementById("conv-reset").addEventListener("click", () => {
        document.getElementById("conv-T-surf").value = 60;
        document.getElementById("conv-T-fluid").value = 25;
        document.getElementById("conv-h").value = 10;
        document.getElementById("conv-area").value = 1;
        document.getElementById("conv-known").value = "Q";
        document.getElementById("conv-results").classList.add("hidden");
      });

      // Radiation calculations
      const SIGMA = 5.670374419e-8;
      document.getElementById("rad-calc").addEventListener("click", () => {
        const Ts = toKelvin(
          document.getElementById("rad-T-surf").value,
          document.getElementById("rad-T-surf-unit").value
        );
        const Tsur = toKelvin(
          document.getElementById("rad-T-sur").value,
          document.getElementById("rad-T-sur-unit").value
        );
        const eps = parseFloat(document.getElementById("rad-eps").value);
        const A = areaToM2(
          document.getElementById("rad-area").value,
          document.getElementById("rad-area-unit").value
        );
        const solveFor = document.getElementById("rad-known").value;

        if (isNaN(Ts) || isNaN(Tsur) || isNaN(eps) || eps < 0 || eps > 1) {
          alert("Please enter valid temperatures and emissivity (0–1).");
          return;
        }
        const T4diff = Math.pow(Ts, 4) - Math.pow(Tsur, 4);
        if (T4diff === 0) {
          alert("Surface and surroundings temperatures must differ.");
          return;
        }

        let q = eps * SIGMA * T4diff; // W/m2
        let Q = NaN,
          Areq = NaN;
        if (solveFor === "Q") {
          if (isNaN(A) || A <= 0) {
            alert("Please enter a valid area.");
            return;
          }
          Q = q * A;
          Areq = A;
        } else if (solveFor === "A") {
          const Qtarget = prompt(
            "Enter desired radiative heat transfer rate Q in watts (W):",
            "1000"
          );
          const Qt = parseFloat(Qtarget);
          if (isNaN(Qt) || Qt === 0) {
            alert("Please enter a valid non-zero Q.");
            return;
          }
          Areq = Qt / q;
          Q = Qt;
        }

        document.getElementById("rad-q").textContent = q.toFixed(2);
        document.getElementById("rad-Q").textContent = isNaN(Q)
          ? "—"
          : Q.toFixed(2);
        document.getElementById("rad-A").textContent = isNaN(Areq)
          ? "—"
          : Areq.toFixed(3);
        document.getElementById("rad-results").classList.remove("hidden");
      });

      document.getElementById("rad-reset").addEventListener("click", () => {
        document.getElementById("rad-T-surf").value = 400;
        document.getElementById("rad-T-sur").value = 300;
        document.getElementById("rad-eps").value = 0.8;
        document.getElementById("rad-area").value = 1;
        document.getElementById("rad-known").value = "Q";
        document.getElementById("rad-results").classList.add("hidden");
      });

