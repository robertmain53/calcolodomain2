    <script>
      function formatCurrencyGBP(value) {
        if (!isFinite(value)) return "£0";
        return (
          "£" + value.toLocaleString("en-GB", { maximumFractionDigits: 0 })
        );
      }

      function updateIsaTypeNote() {
        const isaType = document.getElementById("isaType").value;
        const note = document.getElementById("isaTypeNote");
        switch (isaType) {
          case "cash":
            note.textContent =
              "Annual allowance: typically £20,000 across all adult ISAs. Cash ISA interest is tax-free.";
            break;
          case "stocks":
            note.textContent =
              "Annual allowance: typically £20,000 across all adult ISAs. Investment growth and dividends are tax-free.";
            break;
          case "lifetime":
            note.textContent =
              "Lifetime ISA: up to £4,000/year contributions with a 25% government bonus. Subject to withdrawal rules and penalties.";
            break;
          case "junior":
            note.textContent =
              "Junior ISA: separate annual allowance for children, on top of the adult allowance.";
            break;
        }
      }

      function calculateIsa() {
        const isaType = document.getElementById("isaType").value;
        const initial = Math.max(
          0,
          parseFloat(document.getElementById("initialDeposit").value) || 0
        );
        const contrib = Math.max(
          0,
          parseFloat(document.getElementById("regularContribution").value) || 0
        );
        const freq = document.getElementById("contributionFrequency").value;
        const years = Math.min(
          60,
          Math.max(1, parseInt(document.getElementById("years").value, 10) || 1)
        );

        const isaRate =
          (parseFloat(document.getElementById("isaRate").value) || 0) / 100;
        const taxableRate =
          (parseFloat(document.getElementById("taxableRate").value) || 0) / 100;
        const taxRate =
          parseFloat(document.getElementById("taxRate").value) || 0;

        const adjustForInflation =
          document.getElementById("adjustForInflation").checked;
        const inflationRate = adjustForInflation
          ? (parseFloat(document.getElementById("inflationRate").value) || 0) /
            100
          : 0;

        // Convert contributions to annual equivalent
        const annualContrib = freq === "monthly" ? contrib * 12 : contrib;

        // Lifetime ISA bonus: 25% of contributions up to £4,000/year
        let totalBonus = 0;
        if (isaType === "lifetime") {
          const annualEligible = Math.min(annualContrib, 4000);
          const eligibleYears = years;
          totalBonus = annualEligible * 0.25 * eligibleYears;
        }

        // Future value helper
        function fvLump(P, r, n) {
          return P * Math.pow(1 + r, n);
        }
        function fvAnnuity(C, r, n) {
          if (r === 0) return C * n;
          return C * ((Math.pow(1 + r, n) - 1) / r);
        }

        // ISA future value (tax-free)
        const isaFV =
          fvLump(initial + totalBonus, isaRate, years) +
          fvAnnuity(annualContrib, isaRate, years);
        const isaContribTotal = initial + annualContrib * years;
        const isaGrowth = isaFV - isaContribTotal - totalBonus;

        // Taxable account: reduce rate by tax each year
        const afterTaxRate = taxableRate * (1 - taxRate);
        const taxableFV =
          fvLump(initial, afterTaxRate, years) +
          fvAnnuity(annualContrib, afterTaxRate, years);
        const taxableContribTotal = isaContribTotal;
        const taxableGrowth = taxableFV - taxableContribTotal;

        const taxPaid = Math.max(
          0,
          isaFV - isaContribTotal - totalBonus - taxableGrowth
        ); // approximate tax saved
        const isaAdvantage = isaFV - taxableFV;

        // Inflation adjustment
        const inflationFactor = adjustForInflation
          ? Math.pow(1 + inflationRate, years)
          : 1;
        const isaReal = isaFV / inflationFactor;
        const taxableReal = taxableFV / inflationFactor;

        // Update DOM
        document.getElementById("isaContributions").textContent =
          formatCurrencyGBP(isaContribTotal);
        document.getElementById("isaBonus").textContent =
          isaType === "lifetime" ? formatCurrencyGBP(totalBonus) : "£0";
        document.getElementById("isaFutureValue").textContent =
          formatCurrencyGBP(isaFV);
        document.getElementById("isaGrowth").textContent =
          formatCurrencyGBP(isaGrowth);
        document.getElementById("isaRealValue").textContent =
          formatCurrencyGBP(isaReal);

        document.getElementById("taxableContributions").textContent =
          formatCurrencyGBP(taxableContribTotal);
        document.getElementById("taxPaid").textContent =
          formatCurrencyGBP(taxPaid);
        document.getElementById("taxableFutureValue").textContent =
          formatCurrencyGBP(taxableFV);
        document.getElementById("taxableGrowth").textContent =
          formatCurrencyGBP(taxableGrowth);
        document.getElementById("taxableRealValue").textContent =
          formatCurrencyGBP(taxableReal);

        document.getElementById("isaAdvantage").textContent =
          formatCurrencyGBP(isaAdvantage);
        document.getElementById("effectiveTaxSaved").textContent =
          formatCurrencyGBP(taxPaid);
      }

      function resetIsa() {
        document.getElementById("isaType").value = "cash";
        document.getElementById("initialDeposit").value = 5000;
        document.getElementById("regularContribution").value = 300;
        document.getElementById("contributionFrequency").value = "monthly";
        document.getElementById("years").value = 20;
        document.getElementById("isaRate").value = 5;
        document.getElementById("taxableRate").value = 5;
        document.getElementById("taxRate").value = "0.2";
        document.getElementById("adjustForInflation").checked = false;
        document.getElementById("inflationRate").value = 2;
        document.getElementById("inflationRow").classList.add("hidden");
        document.getElementById("isaRateOutput").textContent = "5%";
        document.getElementById("taxableRateOutput").textContent = "5%";
        document.getElementById("inflationRateOutput").textContent = "2%";
        updateIsaTypeNote();
        calculateIsa();
      }

      document.addEventListener("DOMContentLoaded", function () {
        const isaRateInput = document.getElementById("isaRate");
        const isaRateOutput = document.getElementById("isaRateOutput");
        const taxableRateInput = document.getElementById("taxableRate");
        const taxableRateOutput = document.getElementById("taxableRateOutput");
        const inflationRateInput = document.getElementById("inflationRate");
        const inflationRateOutput = document.getElementById(
          "inflationRateOutput"
        );
        const adjustForInflation =
          document.getElementById("adjustForInflation");
        const inflationRow = document.getElementById("inflationRow");

        isaRateInput.addEventListener("input", () => {
          isaRateOutput.textContent = isaRateInput.value + "%";
        });
        taxableRateInput.addEventListener("input", () => {
          taxableRateOutput.textContent = taxableRateInput.value + "%";
        });
        inflationRateInput.addEventListener("input", () => {
          inflationRateOutput.textContent = inflationRateInput.value + "%";
        });

        adjustForInflation.addEventListener("change", () => {
          if (adjustForInflation.checked) {
            inflationRow.classList.remove("hidden");
          } else {
            inflationRow.classList.add("hidden");
          }
          calculateIsa();
        });

        document.getElementById("isaType").addEventListener("change", () => {
          updateIsaTypeNote();
          calculateIsa();
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            calculateIsa();
          });

        document.getElementById("resetBtn").addEventListener("click", (e) => {
          e.preventDefault();
          resetIsa();
        });

        [
          "initialDeposit",
          "regularContribution",
          "contributionFrequency",
          "years",
          "taxRate",
        ].forEach((id) => {
          document.getElementById(id).addEventListener("change", calculateIsa);
        });
        isaRateInput.addEventListener("change", calculateIsa);
        taxableRateInput.addEventListener("change", calculateIsa);
        inflationRateInput.addEventListener("change", calculateIsa);

        updateIsaTypeNote();
        calculateIsa();
      });
    </script>

