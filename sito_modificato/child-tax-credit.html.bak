    <script>
      // Core Child Tax Credit calculator logic
      function getThreshold(filingStatus) {
        // Simplified federal thresholds
        if (filingStatus === "mfj") return 400000;
        return 200000; // single, HOH, MFS
      }

      function calculateCTC() {
        const year = document.getElementById("tax-year").value;
        const filingStatus = document.getElementById("filing-status").value;
        const agi = parseFloat(document.getElementById("agi").value) || 0;
        const taxLiabilityInput =
          document.getElementById("tax-liability").value;
        const taxLiability =
          taxLiabilityInput === "" ? null : parseFloat(taxLiabilityInput) || 0;
        const kidsUnder17 = Math.max(
          0,
          parseInt(document.getElementById("num-kids-under17").value, 10) || 0
        );
        const otherDeps = Math.max(
          0,
          parseInt(document.getElementById("num-other-dependents").value, 10) ||
            0
        );

        // Parameters (approximate current law)
        const ctcPerChild = 2000;
        const odcPerDep = 500;

        const maxCTC = kidsUnder17 * ctcPerChild;
        const maxODC = otherDeps * odcPerDep;

        const threshold = getThreshold(filingStatus);
        const excessIncome = Math.max(0, agi - threshold);
        let phaseout = 0.05 * excessIncome;

        // Cap phaseout at total potential credits
        const totalMaxCredits = maxCTC + maxODC;
        if (phaseout > totalMaxCredits) phaseout = totalMaxCredits;

        // Apply phaseout first to CTC, then to ODC
        let ctcAfter = maxCTC;
        let odcAfter = maxODC;
        let remainingPhaseout = phaseout;

        if (remainingPhaseout > 0) {
          const ctcReduction = Math.min(ctcAfter, remainingPhaseout);
          ctcAfter -= ctcReduction;
          remainingPhaseout -= ctcReduction;
        }
        if (remainingPhaseout > 0) {
          const odcReduction = Math.min(odcAfter, remainingPhaseout);
          odcAfter -= odcReduction;
          remainingPhaseout -= odcReduction;
        }

        // Estimate non-refundable vs refundable for CTC
        let nonRefundableCTC = 0;
        let refundableCTC = 0;

        if (ctcAfter <= 0) {
          nonRefundableCTC = 0;
          refundableCTC = 0;
        } else if (taxLiability !== null) {
          nonRefundableCTC = Math.min(ctcAfter, taxLiability);
          refundableCTC = Math.max(0, ctcAfter - nonRefundableCTC);
        } else {
          // No tax liability provided: rough 50/50 split, capped
          nonRefundableCTC = Math.min(ctcAfter, ctcAfter * 0.5);
          refundableCTC = ctcAfter - nonRefundableCTC;
        }

        const totalCTC = ctcAfter;
        const totalFamilyCredit = ctcAfter + odcAfter;

        // Update UI
        const fmt = (n) =>
          "$" + n.toLocaleString("en-US", { maximumFractionDigits: 0 });

        document.getElementById("max-ctc").textContent = fmt(maxCTC);
        document.getElementById("phaseout-amount").textContent = fmt(phaseout);
        document.getElementById("total-ctc").textContent = fmt(totalCTC);
        document.getElementById("nonrefundable-ctc").textContent =
          fmt(nonRefundableCTC);
        document.getElementById("refundable-ctc").textContent =
          fmt(refundableCTC);
        document.getElementById("other-dep-credit").textContent = fmt(odcAfter);
        document.getElementById("total-family-credit").textContent =
          fmt(totalFamilyCredit);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("calculate-btn");
        if (btn) {
          btn.addEventListener("click", function (e) {
            e.preventDefault();
            calculateCTC();
          });
          // Auto-calc on load with defaults
          calculateCTC();
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
