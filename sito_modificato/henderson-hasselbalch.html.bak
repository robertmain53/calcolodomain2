    <script>
      // Utility
      function showError(msg) {
        const box = document.getElementById("error-box");
        box.textContent = msg;
        box.classList.remove("hidden");
        document.getElementById("results").classList.add("hidden");
      }
      function clearError() {
        document.getElementById("error-box").classList.add("hidden");
      }

      // Tabs
      const tabAcid = document.getElementById("tab-acid");
      const tabBase = document.getElementById("tab-base");
      const tabBlood = document.getElementById("tab-blood");
      const inputsAcidBase = document.getElementById("inputs-acid-base");
      const inputsBlood = document.getElementById("inputs-blood");
      const label_pKa = document.getElementById("label_pKa");
      const label_acid = document.getElementById("label_acid");
      const label_base = document.getElementById("label_base");

      let currentMode = "acid"; // 'acid' | 'base' | 'blood'
      let swapped = false;

      function setTab(mode) {
        currentMode = mode;
        [tabAcid, tabBase, tabBlood].forEach((btn) =>
          btn.classList.remove("tab-active")
        );
        if (mode === "acid") {
          tabAcid.classList.add("tab-active");
          inputsAcidBase.classList.remove("hidden");
          inputsBlood.classList.add("hidden");
          label_pKa.textContent = "pKa";
          label_acid.textContent = swapped
            ? "[A⁻] (conjugate base)"
            : "[HA] (acid)";
          label_base.textContent = swapped
            ? "[HA] (acid)"
            : "[A⁻] (conjugate base)";
        } else if (mode === "base") {
          tabBase.classList.add("tab-active");
          inputsAcidBase.classList.remove("hidden");
          inputsBlood.classList.add("hidden");
          label_pKa.textContent = "pKb (or pKa of conjugate acid)";
          label_acid.textContent = swapped
            ? "[B] (base)"
            : "[BH⁺] (conjugate acid)";
          label_base.textContent = swapped
            ? "[BH⁺] (conjugate acid)"
            : "[B] (base)";
        } else {
          tabBlood.classList.add("tab-active");
          inputsAcidBase.classList.add("hidden");
          inputsBlood.classList.remove("hidden");
        }
        clearError();
        document.getElementById("results").classList.add("hidden");
      }

      tabAcid.addEventListener("click", () => setTab("acid"));
      tabBase.addEventListener("click", () => setTab("base"));
      tabBlood.addEventListener("click", () => setTab("blood"));

      document.getElementById("btnSwap").addEventListener("click", () => {
        if (currentMode === "blood") return;
        swapped = !swapped;
        setTab(currentMode);
      });

      // Calculation
      document.getElementById("btnCalculate").addEventListener("click", () => {
        clearError();
        const solveFor = document.getElementById("solveFor").value;
        const resultsBox = document.getElementById("results");
        const main = document.getElementById("result-main");
        const ratioP = document.getElementById("result-ratio");
        const steps = document.getElementById("result-steps");

        function log10(x) {
          return Math.log(x) / Math.LN10;
        }

        if (currentMode === "blood") {
          // Blood Henderson–Hasselbalch: pH = 6.1 + log10( HCO3 / (0.03 * PCO2) )
          let pH = parseFloat(document.getElementById("blood_pH").value);
          let HCO3 = parseFloat(document.getElementById("blood_HCO3").value);
          let PCO2 = parseFloat(document.getElementById("blood_PCO2").value);

          if (solveFor === "pH") {
            if (isNaN(HCO3) || isNaN(PCO2) || HCO3 <= 0 || PCO2 <= 0) {
              showError(
                "Enter positive values for [HCO₃⁻] and PCO₂ to compute pH."
              );
              return;
            }
            const denom = 0.03 * PCO2;
            const ratio = HCO3 / denom;
            pH = 6.1 + log10(ratio);
            main.textContent = `pH ≈ ${pH.toFixed(2)}`;
            ratioP.textContent = `[HCO₃⁻] / (0.03 × PCO₂) = ${ratio.toFixed(
              2
            )}`;
            steps.innerHTML = `
          <p>Using pH = 6.1 + log₁₀([HCO₃⁻] / (0.03 × PCO₂)):</p>
          <ul class="list-disc ml-5">
            <li>0.03 × PCO₂ = 0.03 × ${PCO2.toFixed(2)} ≈ ${denom.toFixed(
              2
            )}</li>
            <li>Ratio = ${HCO3.toFixed(2)} / ${denom.toFixed(
              2
            )} ≈ ${ratio.toFixed(2)}</li>
            <li>pH = 6.1 + log₁₀(${ratio.toFixed(2)}) ≈ ${pH.toFixed(2)}</li>
          </ul>
        `;
          } else if (solveFor === "pKa") {
            // Here "pKa" slot means solve for [HCO3-] given pH and PCO2
            if (isNaN(pH) || isNaN(PCO2) || PCO2 <= 0) {
              showError("Enter pH and a positive PCO₂ to compute [HCO₃⁻].");
              return;
            }
            const ratio = Math.pow(10, pH - 6.1);
            const denom = 0.03 * PCO2;
            HCO3 = ratio * denom;
            main.textContent = `[HCO₃⁻] ≈ ${HCO3.toFixed(1)} mEq/L`;
            ratioP.textContent = `[HCO₃⁻] / (0.03 × PCO₂) = ${ratio.toFixed(
              2
            )} (from 10^(pH − 6.1))`;
            steps.innerHTML = `
          <p>Rearranging: [HCO₃⁻] = 10^(pH − 6.1) × (0.03 × PCO₂)</p>
          <ul class="list-disc ml-5">
            <li>10^(pH − 6.1) = 10^(${pH.toFixed(2)} − 6.10) ≈ ${ratio.toFixed(
              2
            )}</li>
            <li>0.03 × PCO₂ = 0.03 × ${PCO2.toFixed(2)} ≈ ${denom.toFixed(
              2
            )}</li>
            <li>[HCO₃⁻] ≈ ${ratio.toFixed(2)} × ${denom.toFixed(
              2
            )} ≈ ${HCO3.toFixed(1)} mEq/L</li>
          </ul>
        `;
          } else {
            // solveFor ratio => here we interpret as solve for PCO2 given pH and HCO3
            if (isNaN(pH) || isNaN(HCO3) || HCO3 <= 0) {
              showError("Enter pH and a positive [HCO₃⁻] to compute PCO₂.");
              return;
            }
            const ratio = Math.pow(10, pH - 6.1);
            const denom = HCO3 / ratio;
            PCO2 = denom / 0.03;
            main.textContent = `PCO₂ ≈ ${PCO2.toFixed(1)} mmHg`;
            ratioP.textContent = `[HCO₃⁻] / (0.03 × PCO₂) = ${ratio.toFixed(
              2
            )} (from 10^(pH − 6.1))`;
            steps.innerHTML = `
          <p>Rearranging: PCO₂ = [HCO₃⁻] / (0.03 × 10^(pH − 6.1))</p>
          <ul class="list-disc ml-5">
            <li>10^(pH − 6.1) = 10^(${pH.toFixed(2)} − 6.10) ≈ ${ratio.toFixed(
              2
            )}</li>
            <li>Denominator = 0.03 × 10^(pH − 6.1) ≈ 0.03 × ${ratio.toFixed(
              2
            )} ≈ ${(0.03 * ratio).toFixed(3)}</li>
            <li>PCO₂ ≈ ${HCO3.toFixed(1)} / ${(0.03 * ratio).toFixed(
              3
            )} ≈ ${PCO2.toFixed(1)} mmHg</li>
          </ul>
        `;
          }
          resultsBox.classList.remove("hidden");
          return;
        }

        // Acid/base modes
        const pH = parseFloat(document.getElementById("input_pH").value);
        const pKa = parseFloat(document.getElementById("input_pKa").value);
        const acid = parseFloat(document.getElementById("input_acid").value);
        const base = parseFloat(document.getElementById("input_base").value);

        let ratio;
        if (solveFor === "pH") {
          if (
            isNaN(pKa) ||
            isNaN(acid) ||
            isNaN(base) ||
            acid <= 0 ||
            base <= 0
          ) {
            showError(
              "Enter positive values for pKa/pKb, acid, and base concentrations to compute pH."
            );
            return;
          }
          ratio = base / acid;
          const pHcalc = pKa + log10(ratio);
          main.textContent = `pH ≈ ${pHcalc.toFixed(3)}`;
          ratioP.textContent = `Base/acid ratio = ${ratio.toFixed(
            3
          )} (from [base]/[acid])`;
          steps.innerHTML = `
        <p>Using pH = pK + log₁₀([base]/[acid]):</p>
        <ul class="list-disc ml-5">
          <li>[base]/[acid] = ${base} / ${acid} ≈ ${ratio.toFixed(3)}</li>
          <li>log₁₀(ratio) ≈ ${log10(ratio).toFixed(3)}</li>
          <li>pH = ${pKa.toFixed(3)} + ${log10(ratio).toFixed(
            3
          )} ≈ ${pHcalc.toFixed(3)}</li>
        </ul>
      `;
        } else if (solveFor === "pKa") {
          if (
            isNaN(pH) ||
            isNaN(acid) ||
            isNaN(base) ||
            acid <= 0 ||
            base <= 0
          ) {
            showError(
              "Enter pH and positive acid/base concentrations to compute pKa/pKb."
            );
            return;
          }
          ratio = base / acid;
          const pKcalc = pH - log10(ratio);
          main.textContent = `${
            currentMode === "base" ? "pKb (or pKa of conjugate acid)" : "pKa"
          } ≈ ${pKcalc.toFixed(3)}`;
          ratioP.textContent = `Base/acid ratio = ${ratio.toFixed(3)}`;
          steps.innerHTML = `
        <p>Rearranging: pK = pH − log₁₀([base]/[acid])</p>
        <ul class="list-disc ml-5">
          <li>[base]/[acid] = ${base} / ${acid} ≈ ${ratio.toFixed(3)}</li>
          <li>log₁₀(ratio) ≈ ${log10(ratio).toFixed(3)}</li>
          <li>pK = ${pH.toFixed(3)} − ${log10(ratio).toFixed(
            3
          )} ≈ ${pKcalc.toFixed(3)}</li>
        </ul>
      `;
        } else {
          // solveFor ratio
          if (isNaN(pH) || isNaN(pKa)) {
            showError(
              "Enter both pH and pKa/pKb to compute the required base/acid ratio."
            );
            return;
          }
          ratio = Math.pow(10, pH - pKa);
          main.textContent = `Required base/acid ratio ≈ ${ratio.toFixed(3)}`;
          ratioP.textContent = `Base/acid = 10^(pH − pK) = 10^(${pH.toFixed(
            3
          )} − ${pKa.toFixed(3)})`;
          steps.innerHTML = `
        <p>From pH = pK + log₁₀([base]/[acid]):</p>
        <ul class="list-disc ml-5">
          <li>pH − pK = ${pH.toFixed(3)} − ${pKa.toFixed(3)} = ${(
            pH - pKa
          ).toFixed(3)}</li>
          <li>[base]/[acid] = 10^(pH − pK) = 10^(${(pH - pKa).toFixed(
            3
          )}) ≈ ${ratio.toFixed(3)}</li>
        </ul>
      `;
        }

        resultsBox.classList.remove("hidden");
      });

      document.getElementById("btnClear").addEventListener("click", () => {
        [
          "input_pH",
          "input_pKa",
          "input_acid",
          "input_base",
          "blood_pH",
          "blood_HCO3",
          "blood_PCO2",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        clearError();
        document.getElementById("results").classList.add("hidden");
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden") ? "true" : "false";
          menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", expanded);
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
