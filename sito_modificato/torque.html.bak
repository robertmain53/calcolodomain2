    <script>
      // Helper: unit conversions to SI
      const FORCE_TO_N = {
        N: (v) => v,
        kN: (v) => v * 1000,
        lbf: (v) => v * 4.4482216153,
        kgf: (v) => v * 9.80665,
      };

      const DIST_TO_M = {
        m: (v) => v,
        cm: (v) => v / 100,
        mm: (v) => v / 1000,
        ft: (v) => v * 0.3048,
        in: (v) => v * 0.0254,
      };

      const TORQUE_FROM_NM = {
        "N·m": (v) => v,
        "N·cm": (v) => v * 100,
        "N·mm": (v) => v * 1000,
        "kN·m": (v) => v / 1000,
        "ft·lb": (v) => v * 0.7375621493,
        "in·lb": (v) => v * 8.8507457676,
        "kgf·m": (v) => v / 9.80665,
      };

      function formatNumber(v, decimals = 4) {
        if (!isFinite(v)) return "—";
        if (Math.abs(v) >= 1e4 || (Math.abs(v) < 1e-3 && v !== 0)) {
          return v.toExponential(3);
        }
        return parseFloat(v.toFixed(decimals)).toString();
      }

      function getAngleSin() {
        const includeAngle = document.getElementById("include-angle").checked;
        if (!includeAngle) return 1;
        const angleVal = parseFloat(
          document.getElementById("angle-input").value
        );
        if (!isFinite(angleVal)) return 1;
        const unit = document.getElementById("angle-unit").value;
        const rad = unit === "deg" ? (angleVal * Math.PI) / 180 : angleVal;
        return Math.sin(rad);
      }

      function updateModeUI(mode) {
        const torqueInputRow = document.getElementById("torque-input-row");
        const forceInput = document.getElementById("force-input");
        const distanceInput = document.getElementById("distance-input");

        if (mode === "torque") {
          torqueInputRow.style.display = "none";
          forceInput.disabled = false;
          distanceInput.disabled = false;
        } else if (mode === "force") {
          torqueInputRow.style.display = "block";
          forceInput.disabled = true;
          distanceInput.disabled = false;
        } else if (mode === "distance") {
          torqueInputRow.style.display = "block";
          forceInput.disabled = false;
          distanceInput.disabled = true;
        }
      }

      document.querySelectorAll(".mode-radio").forEach((r) => {
        r.addEventListener("change", (e) => updateModeUI(e.target.value));
      });

      document
        .getElementById("include-angle")
        .addEventListener("change", (e) => {
          document
            .getElementById("angle-row")
            .classList.toggle("hidden", !e.target.checked);
        });

      document.getElementById("calc-btn").addEventListener("click", () => {
        const mode = document.querySelector(".mode-radio:checked").value;
        const includeAngle = document.getElementById("include-angle").checked;
        const sinTheta = getAngleSin();

        const resultCard = document.getElementById("result-card");
        const resultMain = document.getElementById("result-main");
        const resultSecondary = document.getElementById("result-secondary");
        const resultDetails = document.getElementById("result-details");

        let F = parseFloat(document.getElementById("force-input").value);
        let r = parseFloat(document.getElementById("distance-input").value);
        const Funit = document.getElementById("force-unit").value;
        const runit = document.getElementById("distance-unit").value;

        let tauInput = parseFloat(
          document.getElementById("torque-input").value
        );
        const tauUnit = document.getElementById("torque-unit").value;

        if (mode === "torque") {
          if (!isFinite(F) || !isFinite(r)) {
            alert("Please enter valid numeric values for force and distance.");
            return;
          }
          const F_SI = FORCE_TO_N[Funit](F);
          const r_SI = DIST_TO_M[runit](r);
          const tau_SI = F_SI * r_SI * sinTheta;

          const tauNm = tau_SI;
          const tauFtLb = TORQUE_FROM_NM["ft·lb"](tauNm);

          resultMain.textContent = `Torque τ ≈ ${formatNumber(tauNm, 4)} N·m`;
          resultSecondary.textContent = `≈ ${formatNumber(tauFtLb, 4)} ft·lb`;

          let angleText = includeAngle
            ? ` with θ = ${document.getElementById("angle-input").value} ${
                document.getElementById("angle-unit").value
              }`
            : "";
          resultDetails.innerHTML = `
        <p>Using τ = r · F · sin(θ):</p>
        <p>F = ${formatNumber(F, 4)} ${Funit}, r = ${formatNumber(
            r,
            4
          )} ${runit}${angleText}</p>
      `;
        } else if (mode === "force") {
          if (!isFinite(tauInput) || !isFinite(r)) {
            alert("Please enter valid numeric values for torque and distance.");
            return;
          }
          const tau_SI = tauInput / TORQUE_FROM_NM[tauUnit](1); // invert
          const r_SI = DIST_TO_M[runit](r);
          const effectiveR = r_SI * sinTheta;
          if (effectiveR === 0) {
            alert("Effective lever arm is zero (check distance and angle).");
            return;
          }
          const F_SI = tau_SI / effectiveR;
          const F_out = F_SI / FORCE_TO_N[Funit](1);

          resultMain.textContent = `Required force F ≈ ${formatNumber(
            F_out,
            4
          )} ${Funit}`;
          resultSecondary.textContent = `Torque τ = ${formatNumber(
            tauInput,
            4
          )} ${tauUnit} at r = ${formatNumber(r, 4)} ${runit}`;

          let angleText = includeAngle
            ? ` and θ = ${document.getElementById("angle-input").value} ${
                document.getElementById("angle-unit").value
              }`
            : "";
          resultDetails.innerHTML = `
        <p>From τ = r · F · sin(θ) ⇒ F = τ / (r · sin(θ)).</p>
        <p>Effective lever arm r·sin(θ) = ${formatNumber(
          effectiveR,
          4
        )} m${angleText}.</p>
      `;
        } else if (mode === "distance") {
          if (!isFinite(tauInput) || !isFinite(F)) {
            alert("Please enter valid numeric values for torque and force.");
            return;
          }
          const tau_SI = tauInput / TORQUE_FROM_NM[tauUnit](1);
          const F_SI = FORCE_TO_N[Funit](F);
          const effectiveF = F_SI * sinTheta;
          if (effectiveF === 0) {
            alert("Effective force is zero (check force and angle).");
            return;
          }
          const r_SI = tau_SI / effectiveF;
          const r_out = r_SI / DIST_TO_M[runit](1);

          resultMain.textContent = `Required lever arm r ≈ ${formatNumber(
            r_out,
            4
          )} ${runit}`;
          resultSecondary.textContent = `Torque τ = ${formatNumber(
            tauInput,
            4
          )} ${tauUnit} with F = ${formatNumber(F, 4)} ${Funit}`;

          let angleText = includeAngle
            ? ` and θ = ${document.getElementById("angle-input").value} ${
                document.getElementById("angle-unit").value
              }`
            : "";
          resultDetails.innerHTML = `
        <p>From τ = r · F · sin(θ) ⇒ r = τ / (F · sin(θ)).</p>
        <p>Effective force F·sin(θ) = ${formatNumber(
          effectiveF,
          4
        )} N${angleText}.</p>
      `;
        }

        resultCard.classList.remove("hidden");
      });

      // Initialize UI
      updateModeUI("torque");
    </script>

