    <script>
      // --- Scottish and RUK band definitions (example 2025/26-style) ---
      const PERSONAL_ALLOWANCE = 12570;

      // Scottish bands: thresholds are taxable income above allowance
      const scottishBands = [
        { name: "Starter", lower: 0, upper: 2161, rate: 0.19 },
        { name: "Basic", lower: 2161, upper: 13749, rate: 0.2 },
        { name: "Intermediate", lower: 13749, upper: 25000, rate: 0.21 },
        { name: "Higher", lower: 25000, upper: 75000, rate: 0.42 },
        { name: "Top", lower: 75000, upper: Infinity, rate: 0.47 },
      ];

      // Rest of UK bands (for comparison) – taxable income above allowance
      const rukBands = [
        { name: "Basic", lower: 0, upper: 37700, rate: 0.2 },
        { name: "Higher", lower: 37700, upper: 125140, rate: 0.4 },
        { name: "Additional", lower: 125140, upper: Infinity, rate: 0.45 },
      ];

      // NIC thresholds (simplified annual)
      const NI_PRIMARY_THRESHOLD = 12570; // aligned with PA for simplicity
      const NI_UPPER_EARNINGS = 50270;
      const NI_MAIN_RATE = 0.08; // example
      const NI_UPPER_RATE = 0.02;

      // Student loan thresholds & rates (approx)
      const studentLoanConfigs = {
        none: { threshold: Infinity, rate: 0 },
        plan1: { threshold: 24990, rate: 0.09 },
        plan2: { threshold: 27295, rate: 0.09 },
        plan4: { threshold: 27660, rate: 0.09 },
        pgl: { threshold: 21000, rate: 0.06 },
      };

      function formatMoney(value) {
        return "£" + value.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function getAdjustedPersonalAllowance(income) {
        if (income <= 100000) return PERSONAL_ALLOWANCE;
        const reduction = Math.max(0, (income - 100000) / 2);
        return Math.max(0, PERSONAL_ALLOWANCE - reduction);
      }

      function calcBandTax(taxable, bands) {
        let total = 0;
        const breakdown = [];
        for (const band of bands) {
          const slice = Math.max(0, Math.min(taxable, band.upper) - band.lower);
          const tax = slice * band.rate;
          if (slice > 0) {
            breakdown.push({
              name: band.name,
              slice,
              rate: band.rate,
              tax,
            });
          }
          total += tax;
          if (taxable <= band.upper) break;
        }
        return { total, breakdown };
      }

      function calcNI(income) {
        if (income <= NI_PRIMARY_THRESHOLD) return 0;
        let ni = 0;
        const mainSlice = Math.max(
          0,
          Math.min(income, NI_UPPER_EARNINGS) - NI_PRIMARY_THRESHOLD
        );
        ni += mainSlice * NI_MAIN_RATE;
        if (income > NI_UPPER_EARNINGS) {
          const upperSlice = income - NI_UPPER_EARNINGS;
          ni += upperSlice * NI_UPPER_RATE;
        }
        return ni;
      }

      function calcStudentLoan(income, planKey) {
        const cfg = studentLoanConfigs[planKey] || studentLoanConfigs.none;
        if (cfg.threshold === Infinity) return 0;
        const excess = Math.max(0, income - cfg.threshold);
        return excess * cfg.rate;
      }

      function syncIncomeInputs(fromSlider) {
        const slider = document.getElementById("gross-income-slider");
        const input = document.getElementById("gross-income");
        if (fromSlider) {
          input.value = slider.value;
        } else {
          const val = Number(input.value) || 0;
          slider.value = Math.min(Math.max(val, slider.min), slider.max);
        }
      }

      document
        .getElementById("gross-income-slider")
        .addEventListener("input", () => {
          syncIncomeInputs(true);
        });
      document.getElementById("gross-income").addEventListener("change", () => {
        syncIncomeInputs(false);
      });

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const period = document.getElementById("income-period").value;
        let gross = Number(document.getElementById("gross-income").value) || 0;
        const pensionRate =
          Math.max(
            0,
            Number(document.getElementById("pension-rate").value) || 0
          ) / 100;
        const includeNI = document.getElementById("include-ni").checked;
        const compareRUK = document.getElementById("compare-ruk").checked;
        const studentPlan = document.getElementById("student-loan").value;

        // Convert to annual if needed
        if (period === "monthly") gross *= 12;
        if (period === "weekly") gross *= 52;

        const pension = gross * pensionRate;
        const adjustedIncome = Math.max(0, gross - pension);
        const allowance = getAdjustedPersonalAllowance(adjustedIncome);
        const taxable = Math.max(0, adjustedIncome - allowance);

        const scotResult = calcBandTax(taxable, scottishBands);
        const scotTax = scotResult.total;

        const ni = includeNI ? calcNI(gross) : 0;
        const studentLoan = calcStudentLoan(gross, studentPlan);
        const net = gross - scotTax - ni - studentLoan - pension;

        // Effective rates
        const effScot = gross > 0 ? (scotTax / gross) * 100 : 0;
        const effNi = gross > 0 ? (ni / gross) * 100 : 0;

        // Update summary UI
        const factor = period === "monthly" ? 12 : period === "weekly" ? 52 : 1;
        const netPeriod = net / factor;
        const scotTaxPeriod = scotTax / factor;
        const niPeriod = ni / factor;

        document.getElementById("results-section").classList.remove("hidden");
        document.getElementById("bands-section").classList.remove("hidden");

        document.getElementById("net-pay-display").textContent =
          formatMoney(netPeriod);
        document.getElementById("net-pay-period").textContent =
          period === "annual"
            ? "per year"
            : `per ${period.slice(0, -2)} (${period})`;

        document.getElementById("scot-tax-display").textContent =
          formatMoney(scotTaxPeriod);
        document.getElementById(
          "scot-tax-effective"
        ).textContent = `Effective Scottish income tax rate: ${effScot.toFixed(
          1
        )}%`;

        document.getElementById("ni-display").textContent =
          formatMoney(niPeriod);
        document.getElementById("ni-effective").textContent = includeNI
          ? `Effective NI rate: ${effNi.toFixed(1)}%`
          : "NI not included";

        // Band table
        const tbody = document.getElementById("bands-tbody");
        tbody.innerHTML = "";
        scotResult.breakdown.forEach((b) => {
          const tr = document.createElement("tr");
          tr.className = "band-row border-t";
          tr.innerHTML = `
        <td class="px-3 py-2">${b.name}</td>
        <td class="px-3 py-2 text-right">${formatMoney(b.slice)}</td>
        <td class="px-3 py-2 text-right">${(b.rate * 100).toFixed(1)}%</td>
        <td class="px-3 py-2 text-right">${formatMoney(b.tax)}</td>
      `;
          tbody.appendChild(tr);
        });

        // RUK comparison
        const rukContainer = document.getElementById("ruk-comparison");
        if (compareRUK) {
          const rukResult = calcBandTax(taxable, rukBands);
          const rukTax = rukResult.total;
          const taxDiff = scotTax - rukTax;
          const netRuk = gross - rukTax - ni - studentLoan - pension;
          const netDiff = net - netRuk;

          document.getElementById("ruk-tax-display").textContent = formatMoney(
            rukTax / factor
          );
          document.getElementById("tax-diff-display").textContent = formatMoney(
            taxDiff / factor
          );
          document.getElementById("net-diff-display").textContent = formatMoney(
            netDiff / factor
          );
          document.getElementById("tax-diff-note").textContent =
            taxDiff > 0
              ? "You pay more tax in Scotland on this income."
              : taxDiff < 0
              ? "You pay less tax in Scotland on this income."
              : "No difference for this income level.";

          rukContainer.classList.remove("hidden");
        } else {
          rukContainer.classList.add("hidden");
        }

        // Scroll to results on mobile
        if (window.innerWidth < 768) {
          document
            .getElementById("results-section")
            .scrollIntoView({ behavior: "smooth" });
        }
      });

      // Initial auto-calc
      document.addEventListener("DOMContentLoaded", () => {
        document.getElementById("calculate-btn").click();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
