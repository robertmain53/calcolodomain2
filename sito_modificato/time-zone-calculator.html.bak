    <script>
      // --- Time Zone Calculator Logic ---

      const tzData = [
        // A curated subset of common IANA zones with friendly labels
        {
          id: Intl.DateTimeFormat().resolvedOptions().timeZone,
          label: "Your device time zone (auto)",
        },
        { id: "UTC", label: "UTC (Coordinated Universal Time)" },
        { id: "Europe/London", label: "Europe/London (London)" },
        { id: "Europe/Paris", label: "Europe/Paris (Paris)" },
        { id: "Europe/Berlin", label: "Europe/Berlin (Berlin)" },
        { id: "Europe/Madrid", label: "Europe/Madrid (Madrid)" },
        { id: "Europe/Rome", label: "Europe/Rome (Rome)" },
        { id: "Europe/Moscow", label: "Europe/Moscow (Moscow)" },
        { id: "America/New_York", label: "America/New_York (New York)" },
        { id: "America/Chicago", label: "America/Chicago (Chicago)" },
        { id: "America/Denver", label: "America/Denver (Denver)" },
        {
          id: "America/Los_Angeles",
          label: "America/Los_Angeles (Los Angeles)",
        },
        { id: "America/Sao_Paulo", label: "America/Sao_Paulo (São Paulo)" },
        {
          id: "America/Mexico_City",
          label: "America/Mexico_City (Mexico City)",
        },
        { id: "America/Toronto", label: "America/Toronto (Toronto)" },
        { id: "Asia/Dubai", label: "Asia/Dubai (Dubai)" },
        { id: "Asia/Kolkata", label: "Asia/Kolkata (India – IST)" },
        { id: "Asia/Singapore", label: "Asia/Singapore (Singapore)" },
        { id: "Asia/Shanghai", label: "Asia/Shanghai (Shanghai)" },
        { id: "Asia/Tokyo", label: "Asia/Tokyo (Tokyo)" },
        { id: "Asia/Seoul", label: "Asia/Seoul (Seoul)" },
        { id: "Australia/Sydney", label: "Australia/Sydney (Sydney)" },
        { id: "Pacific/Auckland", label: "Pacific/Auckland (Auckland)" },
      ];

      const baseDateEl = document.getElementById("base-date");
      const baseTimeEl = document.getElementById("base-time");
      const baseTzEl = document.getElementById("base-tz");
      const baseTzOffsetEl = document.getElementById("base-tz-offset");
      const nowBtn = document.getElementById("now-btn");
      const lockDateEl = document.getElementById("lock-date");
      const showBusinessHoursEl = document.getElementById(
        "show-business-hours"
      );
      const use24hEl = document.getElementById("use-24h");
      const timeSliderEl = document.getElementById("time-slider");
      const rowsContainer = document.getElementById("tz-rows");
      const addRowBtn = document.getElementById("add-row-btn");
      const copySummaryBtn = document.getElementById("copy-summary-btn");
      const summaryStatusEl = document.getElementById("summary-status");

      let rowIdCounter = 0;
      const rows = [];

      function pad2(n) {
        return n.toString().padStart(2, "0");
      }

      function formatTime(date, use24h) {
        const h = date.getHours();
        const m = date.getMinutes();
        if (use24h) return `${pad2(h)}:${pad2(m)}`;
        const suffix = h >= 12 ? "PM" : "AM";
        const hour12 = h % 12 === 0 ? 12 : h % 12;
        return `${hour12}:${pad2(m)} ${suffix}`;
      }

      function getOffsetMinutes(tz, date) {
        // offset = local - UTC in minutes
        const dtf = new Intl.DateTimeFormat("en-US", {
          timeZone: tz,
          hour12: false,
          year: "numeric",
          month: "2-digit",
          day: "2-digit",
          hour: "2-digit",
          minute: "2-digit",
          second: "2-digit",
        });
        const parts = dtf.formatToParts(date);
        const data = {};
        for (const p of parts) {
          if (p.type !== "literal") data[p.type] = p.value;
        }
        const localIso = `${data.year}-${data.month}-${data.day}T${data.hour}:${data.minute}:${data.second}.000Z`;
        const localAsUTC = new Date(localIso);
        return (localAsUTC - date) / 60000;
      }

      function offsetLabel(minutes) {
        const sign = minutes >= 0 ? "+" : "-";
        const abs = Math.abs(minutes);
        const h = Math.floor(abs / 60);
        const m = abs % 60;
        return `UTC${sign}${pad2(h)}:${pad2(m)}`;
      }

      function initBaseTzSelect() {
        tzData.forEach((tz) => {
          if (!tz.id) return;
          const opt = document.createElement("option");
          opt.value = tz.id;
          opt.textContent = tz.label;
          baseTzEl.appendChild(opt);
        });
        // Default to device tz if present, else UTC
        const deviceTz = Intl.DateTimeFormat().resolvedOptions().timeZone;
        if (
          deviceTz &&
          [...baseTzEl.options].some((o) => o.value === deviceTz)
        ) {
          baseTzEl.value = deviceTz;
        } else {
          baseTzEl.value = "UTC";
        }
        updateBaseOffsetLabel();
      }

      function setNow() {
        const now = new Date();
        baseDateEl.value = now.toISOString().slice(0, 10);
        baseTimeEl.value = `${pad2(now.getHours())}:${pad2(now.getMinutes())}`;
        timeSliderEl.value = now.getHours() * 60 + now.getMinutes();
        updateAll();
      }

      function baseLocalToUTC() {
        const dateStr = baseDateEl.value;
        const timeStr = baseTimeEl.value || "00:00";
        if (!dateStr) return null;
        const [year, month, day] = dateStr.split("-").map(Number);
        const [hour, minute] = timeStr.split(":").map(Number);
        const baseTz = baseTzEl.value || "UTC";

        // Construct a Date in that timezone by formatting a UTC date to that tz and adjusting
        const utcGuess = new Date(
          Date.UTC(year, month - 1, day, hour, minute, 0)
        );
        const offsetMin = getOffsetMinutes(baseTz, utcGuess);
        return new Date(utcGuess.getTime() - offsetMin * 60000);
      }

      function utcToLocal(utcDate, tz) {
        return new Date(utcDate.toLocaleString("en-US", { timeZone: tz }));
      }

      function updateBaseOffsetLabel() {
        const baseTz = baseTzEl.value || "UTC";
        const ref = baseLocalToUTC() || new Date();
        const offsetMin = getOffsetMinutes(baseTz, ref);
        baseTzOffsetEl.textContent = `Current offset: ${offsetLabel(
          offsetMin
        )} (including DST if applicable)`;
      }

      function createRow(initialTz) {
        const id = ++rowIdCounter;
        const row = { id, tz: initialTz || baseTzEl.value || "UTC" };
        rows.push(row);

        const rowEl = document.createElement("div");
        rowEl.className =
          "px-3 py-3 grid grid-cols-12 gap-2 items-center text-sm";
        rowEl.dataset.rowId = id;

        rowEl.innerHTML = `
      <div class="col-span-12 md:col-span-4 flex flex-col gap-1">
        <div class="flex items-center gap-2">
          <select class="tz-select flex-1 border border-gray-300 rounded-md px-2 py-1.5 text-sm"></select>
          <button type="button" class="remove-row text-gray-400 hover:text-red-500" title="Remove">
            &times;
          </button>
        </div>
        <div class="text-xs text-gray-500 md:hidden tz-offset-mobile"></div>
      </div>
      <div class="col-span-6 md:col-span-3">
        <div class="tz-date text-sm font-medium"></div>
      </div>
      <div class="col-span-4 md:col-span-3">
        <div class="tz-time text-sm font-mono"></div>
      </div>
      <div class="col-span-2 md:col-span-2 text-right hidden md:block">
        <span class="inline-block tz-offset text-xs text-gray-600"></span>
      </div>
      <div class="col-span-12 mt-2">
        <div class="h-2 rounded-full bg-gray-100 overflow-hidden business-bar hidden">
          <div class="h-full bg-green-400 opacity-60" style="width: 33%; margin-left: 37%;"></div>
        </div>
      </div>
    `;

        const selectEl = rowEl.querySelector(".tz-select");
        tzData.forEach((tz) => {
          if (!tz.id) return;
          const opt = document.createElement("option");
          opt.value = tz.id;
          opt.textContent = tz.label;
          selectEl.appendChild(opt);
        });
        if ([...selectEl.options].some((o) => o.value === row.tz)) {
          selectEl.value = row.tz;
        }

        selectEl.addEventListener("change", () => {
          row.tz = selectEl.value;
          updateAll();
        });

        rowEl.querySelector(".remove-row").addEventListener("click", () => {
          const idx = rows.findIndex((r) => r.id === row.id);
          if (idx !== -1) rows.splice(idx, 1);
          rowEl.remove();
          updateAll();
        });

        rowsContainer.appendChild(rowEl);
        updateAll();
      }

      function updateBusinessBars(utcDate) {
        const show = showBusinessHoursEl.checked;
        rowsContainer.querySelectorAll("[data-row-id]").forEach((rowEl) => {
          const bar = rowEl.querySelector(".business-bar");
          if (!bar) return;
          if (!show) {
            bar.classList.add("hidden");
            return;
          }
          const rowId = Number(rowEl.dataset.rowId);
          const row = rows.find((r) => r.id === rowId);
          if (!row) return;

          const local = utcToLocal(utcDate, row.tz);
          const start = new Date(local);
          start.setHours(9, 0, 0, 0);
          const end = new Date(local);
          end.setHours(17, 0, 0, 0);

          const dayStart = new Date(local);
          dayStart.setHours(0, 0, 0, 0);
          const dayEnd = new Date(local);
          dayEnd.setHours(23, 59, 59, 999);

          const totalMs = dayEnd - dayStart;
          const startPct = ((start - dayStart) / totalMs) * 100;
          const widthPct = ((end - start) / totalMs) * 100;

          const clampedStart = Math.max(0, Math.min(100, startPct));
          const clampedWidth = Math.max(
            0,
            Math.min(100 - clampedStart, widthPct)
          );

          const inner = bar.firstElementChild;
          inner.style.marginLeft = clampedStart + "%";
          inner.style.width = clampedWidth + "%";
          bar.classList.remove("hidden");
        });
      }

      function updateAll() {
        const utc = baseLocalToUTC();
        if (!utc) return;

        const minutesOfDay = utc.getUTCHours() * 60 + utc.getUTCMinutes();
        timeSliderEl.value = minutesOfDay;

        const use24h = use24hEl.checked;

        rowsContainer.querySelectorAll("[data-row-id]").forEach((rowEl) => {
          const rowId = Number(rowEl.dataset.rowId);
          const row = rows.find((r) => r.id === rowId);
          if (!row) return;

          const local = utcToLocal(utc, row.tz);
          const dateStr = local.toLocaleDateString(undefined, {
            year: "numeric",
            month: "short",
            day: "numeric",
            weekday: "short",
          });
          const timeStr = formatTime(local, use24h);
          const offsetMin = getOffsetMinutes(row.tz, utc);
          const offsetStr = offsetLabel(offsetMin);

          rowEl.querySelector(".tz-date").textContent = dateStr;
          rowEl.querySelector(".tz-time").textContent = timeStr;
          const offsetEl = rowEl.querySelector(".tz-offset");
          const offsetMobileEl = rowEl.querySelector(".tz-offset-mobile");
          if (offsetEl) offsetEl.textContent = offsetStr;
          if (offsetMobileEl) offsetMobileEl.textContent = offsetStr;
        });

        updateBusinessBars(utc);
        updateBaseOffsetLabel();
      }

      function onSliderChange() {
        const minutes = Number(timeSliderEl.value || 0);
        const h = Math.floor(minutes / 60);
        const m = minutes % 60;

        const dateStr = baseDateEl.value;
        if (!dateStr) return;

        const [year, month, day] = dateStr.split("-").map(Number);
        const baseTz = baseTzEl.value || "UTC";

        // Start from UTC midnight of that date, then add minutes, then map to base tz
        const utcMidnight = new Date(Date.UTC(year, month - 1, day, 0, 0, 0));
        const utcTarget = new Date(utcMidnight.getTime() + minutes * 60000);

        const localInBase = utcToLocal(utcTarget, baseTz);
        if (!lockDateEl.checked) {
          baseDateEl.value = localInBase.toISOString().slice(0, 10);
        }
        baseTimeEl.value = `${pad2(localInBase.getHours())}:${pad2(
          localInBase.getMinutes()
        )}`;
        updateAll();
      }

      function buildSummary() {
        const utc = baseLocalToUTC();
        if (!utc) return "";
        const lines = [];
        const baseLine = `Reference time: ${baseDateEl.value} ${baseTimeEl.value} (${baseTzEl.value})`;
        lines.push(baseLine);
        lines.push("");

        rows.forEach((row) => {
          const local = utcToLocal(utc, row.tz);
          const dateStr = local.toLocaleDateString(undefined, {
            year: "numeric",
            month: "short",
            day: "numeric",
            weekday: "short",
          });
          const timeStr = formatTime(local, use24hEl.checked);
          const offsetStr = offsetLabel(getOffsetMinutes(row.tz, utc));
          lines.push(`${row.tz}: ${dateStr} – ${timeStr} (${offsetStr})`);
        });

        return lines.join("\n");
      }

      async function copySummary() {
        const text = buildSummary();
        if (!text) return;
        try {
          await navigator.clipboard.writeText(text);
          summaryStatusEl.textContent = "Summary copied to clipboard.";
        } catch (e) {
          summaryStatusEl.textContent =
            "Unable to copy automatically. You can select and copy manually.";
        }
        setTimeout(() => {
          summaryStatusEl.textContent = "";
        }, 4000);
      }

      document.addEventListener("DOMContentLoaded", () => {
        initBaseTzSelect();
        setNow();

        baseDateEl.addEventListener("change", updateAll);
        baseTimeEl.addEventListener("change", () => {
          const [h, m] = (baseTimeEl.value || "00:00").split(":").map(Number);
          timeSliderEl.value = h * 60 + m;
          updateAll();
        });
        baseTzEl.addEventListener("change", () => {
          updateBaseOffsetLabel();
          updateAll();
        });
        nowBtn.addEventListener("click", setNow);
        showBusinessHoursEl.addEventListener("change", () => updateAll());
        use24hEl.addEventListener("change", () => updateAll());
        timeSliderEl.addEventListener("input", onSliderChange);
        timeSliderEl.addEventListener("change", onSliderChange);
        addRowBtn.addEventListener("click", () => createRow());
        copySummaryBtn.addEventListener("click", copySummary);

        // Initialize with two common zones for convenience
        createRow("America/New_York");
        createRow("Europe/London");
      });

      // Mobile menu script (from template)
      document
        .getElementById("mobile-menu-toggle")
        ?.addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          if (!menu) return;
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
        });
    </script>

