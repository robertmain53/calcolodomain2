    <script>
      // Utility functions
      function toNumber(val) {
        const n = parseFloat(val);
        return isNaN(n) ? 0 : n;
      }
      function formatMoney(val) {
        return "$" + val.toFixed(2);
      }
      function calcMargin(cost, price) {
        if (price <= 0) return 0;
        return ((price - cost) / price) * 100;
      }

      // Tab switching
      const tabPricing = document.getElementById("tab-pricing");
      const tabMetal = document.getElementById("tab-metal");
      const pricingSection = document.getElementById("pricing-section");
      const metalSection = document.getElementById("metal-section");

      tabPricing.addEventListener("click", () => {
        tabPricing.classList.remove("bg-gray-100", "text-gray-700");
        tabPricing.classList.add("bg-blue-600", "text-white");
        tabMetal.classList.remove("bg-blue-600", "text-white");
        tabMetal.classList.add("bg-gray-100", "text-gray-700");
        pricingSection.classList.remove("hidden");
        metalSection.classList.add("hidden");
      });

      tabMetal.addEventListener("click", () => {
        tabMetal.classList.remove("bg-gray-100", "text-gray-700");
        tabMetal.classList.add("bg-blue-600", "text-white");
        tabPricing.classList.remove("bg-blue-600", "text-white");
        tabPricing.classList.add("bg-gray-100", "text-gray-700");
        pricingSection.classList.add("hidden");
        metalSection.classList.remove("hidden");
      });

      // Markup type toggle
      const markupType = document.getElementById("markup-type");
      const markupMultiplierWrapper = document.getElementById(
        "markup-multiplier-wrapper"
      );
      const markupMarginWrapper = document.getElementById(
        "markup-margin-wrapper"
      );

      markupType.addEventListener("change", () => {
        if (markupType.value === "multiplier") {
          markupMultiplierWrapper.classList.remove("hidden");
          markupMarginWrapper.classList.add("hidden");
        } else {
          markupMultiplierWrapper.classList.add("hidden");
          markupMarginWrapper.classList.remove("hidden");
        }
      });

      // Main pricing calculation
      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const warningText = document.getElementById("warning-text");

      calculateBtn.addEventListener("click", () => {
        warningText.textContent = "";

        const materials = toNumber(
          document.getElementById("materials-cost").value
        );
        const extraMaterials = toNumber(
          document.getElementById("extra-materials").value
        );
        const laborRate = toNumber(document.getElementById("labor-rate").value);
        const laborHours = toNumber(
          document.getElementById("labor-hours").value
        );
        const overheadFixed = toNumber(
          document.getElementById("overhead-fixed").value
        );
        const overheadPercent = toNumber(
          document.getElementById("overhead-percent").value
        );
        const markupMethod = markupType.value;
        const markupMultiplier =
          toNumber(document.getElementById("markup-multiplier").value) || 1;
        const markupMargin = toNumber(
          document.getElementById("markup-margin").value
        );
        const wholesaleDiscount = toNumber(
          document.getElementById("wholesale-discount").value
        );

        if (
          materials === 0 &&
          laborRate === 0 &&
          laborHours === 0 &&
          overheadFixed === 0 &&
          overheadPercent === 0
        ) {
          warningText.textContent =
            "Enter at least materials, labor, or overhead to calculate a price.";
          return;
        }

        const materialsTotal = materials + extraMaterials;
        const labor = laborRate * laborHours;
        const baseCost = materialsTotal + labor;
        const overheadFromPercent = baseCost * (overheadPercent / 100);
        const overheadTotal = overheadFixed + overheadFromPercent;
        const totalCost = baseCost + overheadTotal;

        let retailPrice = 0;
        if (markupMethod === "multiplier") {
          retailPrice =
            totalCost * (markupMultiplier > 0 ? markupMultiplier : 1);
        } else {
          const marginFraction = Math.min(markupMargin / 100, 0.99);
          retailPrice =
            marginFraction >= 0.99
              ? totalCost * 10
              : totalCost / (1 - marginFraction);
        }

        let wholesalePrice = retailPrice;
        if (wholesaleDiscount > 0 && wholesaleDiscount < 100) {
          wholesalePrice = retailPrice * (1 - wholesaleDiscount / 100);
        }

        // Update results
        document.getElementById("res-materials").textContent =
          formatMoney(materialsTotal);
        document.getElementById("res-labor").textContent = formatMoney(labor);
        document.getElementById("res-overhead").textContent =
          formatMoney(overheadTotal);
        document.getElementById("res-total-cost").textContent =
          formatMoney(totalCost);

        document.getElementById("res-retail-price").textContent =
          formatMoney(retailPrice);
        const retailProfit = retailPrice - totalCost;
        const retailMargin = calcMargin(totalCost, retailPrice);
        document.getElementById("res-retail-profit").textContent =
          "Profit: " +
          formatMoney(retailProfit) +
          " (" +
          retailMargin.toFixed(1) +
          "% margin)";

        document.getElementById("res-wholesale-price").textContent =
          formatMoney(wholesalePrice);
        const wholesaleProfit = wholesalePrice - totalCost;
        const wholesaleMargin = calcMargin(totalCost, wholesalePrice);
        document.getElementById("res-wholesale-profit").textContent =
          "Profit: " +
          formatMoney(wholesaleProfit) +
          " (" +
          wholesaleMargin.toFixed(1) +
          "% margin)";

        if (retailMargin < 30) {
          warningText.textContent =
            "Note: Your retail margin is below 30%. Consider increasing your markup or reducing costs.";
        }
      });

      resetBtn.addEventListener("click", () => {
        [
          "materials-cost",
          "extra-materials",
          "labor-rate",
          "labor-hours",
          "overhead-fixed",
          "overhead-percent",
          "markup-multiplier",
          "markup-margin",
          "wholesale-discount",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });

        document.getElementById("res-materials").textContent = "$0.00";
        document.getElementById("res-labor").textContent = "$0.00";
        document.getElementById("res-overhead").textContent = "$0.00";
        document.getElementById("res-total-cost").textContent = "$0.00";
        document.getElementById("res-retail-price").textContent = "$0.00";
        document.getElementById("res-retail-profit").textContent =
          "Profit: $0.00 (0.0% margin)";
        document.getElementById("res-wholesale-price").textContent = "$0.00";
        document.getElementById("res-wholesale-profit").textContent =
          "Profit: $0.00 (0.0% margin)";
        warningText.textContent = "";
      });

      // Metal helper logic
      const karatSelect = document.getElementById("karat");
      const customPurityWrapper = document.getElementById(
        "custom-purity-wrapper"
      );
      const metalCalcBtn = document.getElementById("metal-calc-btn");
      const metalAddBtn = document.getElementById("metal-add-btn");
      const metalWarning = document.getElementById("metal-warning");
      const metalCostResult = document.getElementById("metal-cost-result");

      karatSelect.addEventListener("change", () => {
        if (karatSelect.value === "custom") {
          customPurityWrapper.classList.remove("hidden");
        } else {
          customPurityWrapper.classList.add("hidden");
        }
      });

      function computeMetalCost() {
        metalWarning.textContent = "";
        const spot = toNumber(document.getElementById("spot-price").value);
        const karatVal = karatSelect.value;
        const customPurity = toNumber(
          document.getElementById("custom-purity").value
        );
        const weight = toNumber(document.getElementById("metal-weight").value);
        const unit = document.getElementById("metal-weight-unit").value;

        if (spot <= 0 || weight <= 0) {
          metalWarning.textContent = "Enter both spot price and metal weight.";
          return null;
        }

        let purityFraction;
        if (karatVal === "custom") {
          if (customPurity <= 0 || customPurity > 100) {
            metalWarning.textContent =
              "Enter a custom purity between 1% and 100%.";
            return null;
          }
          purityFraction = customPurity / 100;
        } else {
          purityFraction = parseFloat(karatVal) / 24;
        }

        let weightGrams = weight;
        if (unit === "oz") {
          // 1 troy ounce ≈ 31.1035 g
          weightGrams = weight * 31.1035;
        }

        const alloyPricePerGram = spot * purityFraction;
        const cost = alloyPricePerGram * weightGrams;
        metalCostResult.textContent = formatMoney(cost);
        return cost;
      }

      metalCalcBtn.addEventListener("click", computeMetalCost);

      metalAddBtn.addEventListener("click", () => {
        const cost = computeMetalCost();
        if (cost === null) return;
        const materialsInput = document.getElementById("materials-cost");
        const current = toNumber(materialsInput.value);
        materialsInput.value = (current + cost).toFixed(2);
      });

      // Basic defaults
      document.getElementById("markup-multiplier").value = "2.5";
      document.getElementById("wholesale-discount").value = "50";
    </script>

