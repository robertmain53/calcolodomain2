    const tabPanels = document.querySelectorAll('.tab-panel');
    tabButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        const target = btn.getAttribute('data-tab');
        tabButtons.forEach(b => b.classList.remove('tab-button-active', 'bg-blue-50', 'text-blue-900', 'border-blue-100'));
        btn.classList.add('tab-button-active', 'bg-blue-50', 'text-blue-900', 'border-blue-100');
        tabPanels.forEach(panel => panel.classList.toggle('hidden', panel.id !== 'tab-' + target));
      });
    });

    // Constants
    const BTU_J = {
      btu_it: 1055.05585262,
      btu_th: 1054.35026444,
      btu_mean: 1055.87
    };

    // 1 US therm = 100,000 BTU (IT)
    const THERM_J = {
      therm_us: 100000 * BTU_J['btu_it'],
      // UK/EC therm is often defined ≈ 105.505585 MJ; we'll align with a typical EC definition
      therm_uk: 105505585.257348,
      therm_ec: 105505585.257348
    };

    // Elements Therm -> BTU
    const thermValueEl = document.getElementById('therm-value');
    const thermTypeEl = document.getElementById('therm-type');
    const btuTypeEl = document.getElementById('btu-type');
    const thermBtuResultEl = document.getElementById('therm-btu-result');
    const thermJoulesResultEl = document.getElementById('therm-joules-result');
    const thermFactorLabelEl = document.getElementById('therm-factor-label');

    // Elements BTU -> Therm
    const btuValueEl = document.getElementById('btu-value');
    const btuType2El = document.getElementById('btu-type-2');
    const thermType2El = document.getElementById('therm-type-2');
    const btuThermResultEl = document.getElementById('btu-therm-result');
    const btuJoulesResultEl = document.getElementById('btu-joules-result');

    // Table elems
    const tbl01Therm = document.getElementById('tbl-01-therm');
    const tbl01kBtu = document.getElementById('tbl-01-kbtu');
    const tbl05Therm = document.getElementById('tbl-05-therm');
    const tbl05kBtu = document.getElementById('tbl-05-kbtu');
    const tbl1Therm = document.getElementById('tbl-1-therm');
    const tbl1kBtu = document.getElementById('tbl-1-kbtu');
    const tbl5Therm = document.getElementById('tbl-5-therm');
    const tbl5kBtu = document.getElementById('tbl-5-kbtu');
    const tbl10Therm = document.getElementById('tbl-10-therm');
    const tbl10kBtu = document.getElementById('tbl-10-kbtu');

    function updateThermToBtu() {
      const val = parseFloat(thermValueEl.value || 0);
      const thermType = thermTypeEl.value;
      const btuType = btuTypeEl.value;
      const thermJ = THERM_J[thermType];
      const btuJ = BTU_J[btuType];

      const joules = val * thermJ;
      const btu = joules / btuJ;

      thermJoulesResultEl.textContent = joules.toFixed(2).replace(/\.?0+$/,'');
      thermBtuResultEl.textContent = btu.toFixed(4).replace(/\.?0+$/,'');

      let thermLabel = 'US therm';
      if (thermType === 'therm_uk') thermLabel = 'UK / EC therm';
      if (thermType === 'therm_ec') thermLabel = 'EC therm';
      let btuLabel = 'BTU (IT)';
      if (btuType === 'btu_th') btuLabel = 'BTU (thermochemical)';
      if (btuType === 'btu_mean') btuLabel = 'BTU (mean)';
      thermFactorLabelEl.textContent = 'Using 1 ' + thermLabel + ' = ' + thermJ.toFixed(2) + ' J and 1 ' + btuLabel + ' = ' + btuJ.toFixed(6) + ' J';
    }

    function updateBtuToTherm() {
      const val = parseFloat(btuValueEl.value || 0);
      const btuType = btuType2El.value;
      const thermType = thermType2El.value;
      const btuJ = BTU_J[btuType];
      const thermJ = THERM_J[thermType];

      const joules = val * btuJ;
      const therms = joules / thermJ;

      btuJoulesResultEl.textContent = joules.toFixed(2).replace(/\.?0+$/,'');
      btuThermResultEl.textContent = therms.toFixed(6).replace(/\.?0+$/,'');
    }

    function updateTable() {
      // Table uses US therm and BTU IT
      const factor = 100000; // 1 therm US -> 100,000 BTU
      tbl01Therm.textContent = (0.1 * factor).toString();
      tbl01kBtu.textContent = (0.1 * factor / 1000).toString();
      tbl05Therm.textContent = (0.5 * factor).toString();
      tbl05kBtu.textContent = (0.5 * factor / 1000).toString();
      tbl1Therm.textContent = (1 * factor).toString();
      tbl1kBtu.textContent = (1 * factor / 1000).toString();
      tbl5Therm.textContent = (5 * factor).toString();
      tbl5kBtu.textContent = (5 * factor / 1000).toString();
      tbl10Therm.textContent = (10 * factor).toString();
      tbl10kBtu.textContent = (10 * factor / 1000).toString();
    }

    thermValueEl.addEventListener('input', updateThermToBtu);
    thermTypeEl.addEventListener('input', () => { updateThermToBtu(); });
    btuTypeEl.addEventListener('input', updateThermToBtu);

    btuValueEl.addEventListener('input', updateBtuToTherm);
    btuType2El.addEventListener('input', updateBtuToTherm);
    thermType2El.addEventListener('input', updateBtuToTherm);

    // init
    updateThermToBtu();
    updateBtuToTherm();
    updateTable();
  </script>

