        function calculatePER(event) {
            event.preventDefault();
            const points = parseFloat(document.getElementById('points').value);
            const rebounds = parseFloat(document.getElementById('rebounds').value);
            const assists = parseFloat(document.getElementById('assists').value);
            const steals = parseFloat(document.getElementById('steals').value);
            const blocks = parseFloat(document.getElementById('blocks').value);

            if (isNaN(points) || isNaN(rebounds) || isNaN(assists) || isNaN(steals) || isNaN(blocks)) {
                document.getElementById('formError').textContent = "Please enter valid numbers for all fields.";
                return;
            }

            const per = (points + rebounds + assists + steals + blocks) / 5; // Simplified formula for demonstration
            document.getElementById('perValue').textContent = per.toFixed(2);
            document.getElementById('formError').textContent = "";
        }
    </script>


