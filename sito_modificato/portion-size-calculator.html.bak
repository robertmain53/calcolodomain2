    <script>
      // Core data model for base portions (per adult, moderate, maintenance, main meal)
      const BASE_PORTIONS = {
        main: {
          protein: 120, // g
          carbs: 150,
          veg: 200,
          fruit: 100,
          fats: 12,
        },
        breakfast: {
          protein: 60,
          carbs: 80,
          veg: 30,
          fruit: 80,
          fats: 8,
        },
        snack: {
          protein: 30,
          carbs: 40,
          veg: 40,
          fruit: 80,
          fats: 6,
        },
        party: {
          protein: 90,
          carbs: 160,
          veg: 120,
          fruit: 120,
          fats: 14,
        },
      };

      const AGE_MULTIPLIER = {
        adult: 1.0,
        teen: 1.1,
        child: 0.7,
        toddler: 0.45,
        senior: 0.9,
      };

      const ACTIVITY_MULTIPLIER = {
        sedentary: 0.9,
        moderate: 1.0,
        active: 1.15,
      };

      const GOAL_MULTIPLIER = {
        loss: {
          protein: 1.0,
          carbs: 0.8,
          veg: 1.2,
          fruit: 1.0,
          fats: 0.75,
        },
        maintenance: {
          protein: 1.0,
          carbs: 1.0,
          veg: 1.0,
          fruit: 1.0,
          fats: 1.0,
        },
        gain: {
          protein: 1.1,
          carbs: 1.2,
          veg: 1.0,
          fruit: 1.1,
          fats: 1.2,
        },
      };

      const HAND_GUIDE = {
        protein: { gramsPerUnit: 95, label: "palm(s)" },
        carbs: { gramsPerUnit: 45, label: "cupped hand(s)" },
        veg: { gramsPerUnit: 90, label: "fist(s)" },
        fruit: { gramsPerUnit: 90, label: "fist(s)" },
        fats: { gramsPerUnit: 7.5, label: "thumb(s)" },
      };

      function formatAmount(grams, unitSystem) {
        if (unitSystem === "metric") {
          if (grams < 1) return "–";
          if (grams < 1000) return grams.toFixed(0) + " g";
          return (grams / 1000).toFixed(2) + " kg";
        } else {
          const ounces = grams / 28.3495;
          if (ounces < 0.1) return "–";
          // Rough conversion to cups for carbs/veg/fruit; fats stay in tbsp
          return ounces.toFixed(1) + " oz";
        }
      }

      function formatHandUnits(grams, key) {
        const guide = HAND_GUIDE[key];
        if (!guide || grams <= 0) return "–";
        const units = grams / guide.gramsPerUnit;
        if (units < 0.25) return "less than ¼ " + guide.label;
        if (units < 0.75) return "about ½ " + guide.label;
        if (units < 1.25) return "about 1 " + guide.label;
        if (units < 1.75) return "about 1½ " + guide.label;
        return (
          "about " + units.toFixed(1).replace(/\.0$/, "") + " " + guide.label
        );
      }

      function calculatePortions() {
        const mealType = document.getElementById("mealType").value;
        const people = Math.max(
          1,
          parseInt(document.getElementById("peopleCount").value, 10) || 1
        );
        const ageGroup = document.getElementById("ageGroup").value;
        const activity = document.getElementById("activityLevel").value;
        const goal = document.getElementById("goal").value;
        const unitSystem = document.getElementById("unitSystem").value;

        const base = BASE_PORTIONS[mealType] || BASE_PORTIONS.main;
        const ageMul = AGE_MULTIPLIER[ageGroup] || 1.0;
        const actMul = ACTIVITY_MULTIPLIER[activity] || 1.0;
        const goalMul = GOAL_MULTIPLIER[goal] || GOAL_MULTIPLIER.maintenance;

        const perPerson = {};
        Object.keys(base).forEach((key) => {
          const g = base[key] * ageMul * actMul * (goalMul[key] || 1.0);
          perPerson[key] = g;
        });

        const total = {};
        Object.keys(perPerson).forEach((key) => {
          total[key] = perPerson[key] * people;
        });

        // Render results
        const tbody = document.getElementById("resultsTableBody");
        tbody.innerHTML = "";

        const labels = {
          protein: "Protein foods",
          carbs: "Starchy carbs",
          veg: "Vegetables / salad",
          fruit: "Fruit",
          fats: "Fats & dressings",
        };

        Object.keys(labels).forEach((key) => {
          const tr = document.createElement("tr");
          tr.className = "border-b last:border-b-0";

          const tdLabel = document.createElement("td");
          tdLabel.className = "px-3 py-2 text-gray-800";
          tdLabel.textContent = labels[key];

          const tdPer = document.createElement("td");
          tdPer.className = "px-3 py-2 text-right text-gray-800";
          tdPer.textContent = formatAmount(perPerson[key], unitSystem);

          const tdTotal = document.createElement("td");
          tdTotal.className = "px-3 py-2 text-right text-gray-800";
          tdTotal.textContent = formatAmount(total[key], unitSystem);

          const tdHand = document.createElement("td");
          tdHand.className = "px-3 py-2 text-gray-700";
          tdHand.textContent = formatHandUnits(perPerson[key], key);

          tr.appendChild(tdLabel);
          tr.appendChild(tdPer);
          tr.appendChild(tdTotal);
          tr.appendChild(tdHand);
          tbody.appendChild(tr);
        });

        const summary = document.getElementById("resultsSummary");
        const ageTextMap = {
          adult: "adults",
          teen: "teens",
          child: "children",
          toddler: "toddlers",
          senior: "seniors",
        };
        const goalTextMap = {
          loss: "weight loss",
          maintenance: "weight maintenance",
          gain: "weight gain or higher energy needs",
        };
        const mealTextMap = {
          main: "a main meal",
          breakfast: "breakfast",
          snack: "a snack",
          party: "a party or buffet",
        };

        summary.textContent =
          `Estimated portions for ${people} ${
            ageTextMap[ageGroup] || "people"
          } ` +
          `for ${mealTextMap[mealType] || "this meal"}, ` +
          `${activity} activity, aiming for ${
            goalTextMap[goal] || "maintenance"
          }.`;

        document.getElementById("resultsContainer").classList.remove("hidden");
        document
          .getElementById("partyHint")
          .classList.toggle("hidden", mealType !== "party");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculatePortions);

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("mealType").value = "main";
        document.getElementById("peopleCount").value = 1;
        document.getElementById("ageGroup").value = "adult";
        document.getElementById("activityLevel").value = "moderate";
        document.getElementById("goal").value = "maintenance";
        document.getElementById("unitSystem").value = "metric";
        document.getElementById("resultsContainer").classList.add("hidden");
      });

      // Presets
      document.querySelectorAll(".preset-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const preset = btn.getAttribute("data-preset");
          if (preset === "family-dinner") {
            document.getElementById("mealType").value = "main";
            document.getElementById("peopleCount").value = 4;
            document.getElementById("ageGroup").value = "adult";
            document.getElementById("activityLevel").value = "moderate";
            document.getElementById("goal").value = "maintenance";
          } else if (preset === "kids-party") {
            document.getElementById("mealType").value = "party";
            document.getElementById("peopleCount").value = 10;
            document.getElementById("ageGroup").value = "child";
            document.getElementById("activityLevel").value = "moderate";
            document.getElementById("goal").value = "maintenance";
          } else if (preset === "meal-prep") {
            document.getElementById("mealType").value = "main";
            document.getElementById("peopleCount").value = 10;
            document.getElementById("ageGroup").value = "adult";
            document.getElementById("activityLevel").value = "moderate";
            document.getElementById("goal").value = "maintenance";
          }
          calculatePortions();
        });
      });

      // Auto-calc on load with default settings
      window.addEventListener("DOMContentLoaded", calculatePortions);
    </script>

