      // Utility: parse time string based on format (24h or 12h)
      function parseTime(str, format) {
        if (!str) return null;
        str = str.trim().toLowerCase();
        let hours, minutes;
        if (format === "24") {
          const m = str.match(/^(\d{1,2}):(\d{2})$/);
          if (!m) return null;
          hours = parseInt(m[1], 10);
          minutes = parseInt(m[2], 10);
          if (hours < 0 || hours > 23 || minutes < 0 || minutes > 59)
            return null;
        } else {
          const m = str.match(/^(\d{1,2}):(\d{2})\s*(am|pm)$/);
          if (!m) return null;
          hours = parseInt(m[1], 10);
          minutes = parseInt(m[2], 10);
          const ampm = m[3];
          if (hours < 1 || hours > 12 || minutes < 0 || minutes > 59)
            return null;
          if (ampm === "pm" && hours !== 12) hours += 12;
          if (ampm === "am" && hours === 12) hours = 0;
        }
        return hours * 60 + minutes;
      }

      function minutesToHours(mins) {
        return Math.round((mins / 60) * 100) / 100;
      }

      function formatMoney(value) {
        if (isNaN(value)) return "$0.00";
        return "$" + value.toFixed(2);
      }

      // DAILY SHIFTS
      function buildDailyShiftRows() {
        const container = document.getElementById("daily-shifts-container");
        const count = parseInt(
          document.getElementById("daily-shift-count").value,
          10
        );
        container.innerHTML = "";
        for (let i = 1; i <= count; i++) {
          const div = document.createElement("div");
          div.className = "border border-gray-200 rounded-md p-3";
          div.innerHTML = `
        <h3 class="text-sm font-semibold mb-2">Shift ${i}</h3>
        <div class="grid md:grid-cols-3 gap-3">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">Start time</label>
            <input type="text" class="daily-start w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="e.g. 09:00 or 9:00 AM">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">End time</label>
            <input type="text" class="daily-end w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="e.g. 17:30 or 5:30 PM">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">Unpaid break (minutes)</label>
            <input type="number" min="0" step="1" class="daily-break input-small w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" placeholder="e.g. 30">
          </div>
        </div>
      `;
          container.appendChild(div);
        }
      }

      function calcDaily() {
