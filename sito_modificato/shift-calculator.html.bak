        let totalMinutes = 0;
        for (let i = 0; i < startInputs.length; i++) {
          const startStr = startInputs[i].value;
          const endStr = endInputs[i].value;
          const breakMin = parseInt(breakInputs[i].value || "0", 10);
          if (!startStr && !endStr && !breakInputs[i].value) continue;
          const start = parseTime(startStr, format);
          const end = parseTime(endStr, format);
          if (
            start === null ||
            end === null ||
            isNaN(breakMin) ||
            breakMin < 0
          ) {
            alert(
              "Please enter valid times and break minutes for all filled shifts."
            );
            return;
          }
          let duration = end - start;
          if (duration < 0) duration += 24 * 60; // overnight
          let net = duration - breakMin;
          if (net < 0) net = 0;
          totalMinutes += net;
        }
        const totalHours = minutesToHours(totalMinutes);
        const rate = parseFloat(
          document.getElementById("daily-hourly-rate").value
        );
        const otThreshold = parseFloat(
          document.getElementById("daily-ot-threshold").value
        );
        const otMult = parseFloat(
          document.getElementById("daily-ot-multiplier").value
        );
        let regularHours = totalHours;
        let otHours = 0;
        if (!isNaN(otThreshold) && otThreshold > 0) {
          regularHours = Math.min(totalHours, otThreshold);
          otHours = Math.max(0, totalHours - otThreshold);
        }
        let pay = 0;
        if (!isNaN(rate) && rate > 0) {
          if (!isNaN(otMult) && otMult > 1 && otHours > 0) {
            pay = rate * regularHours + rate * otMult * otHours;
          } else {
            pay = rate * totalHours;
          }
        }
        document.getElementById("daily-total-hours").textContent =
          totalHours.toFixed(2);
        document.getElementById("daily-regular-hours").textContent =
          regularHours.toFixed(2);
        document.getElementById("daily-ot-hours").textContent =
          otHours.toFixed(2);
        document.getElementById("daily-pay").textContent = formatMoney(pay);
        document.getElementById("daily-results").classList.remove("hidden");
      }

      function clearDaily() {
        document
          .querySelectorAll(".daily-start, .daily-end, .daily-break")
          .forEach((el) => (el.value = ""));
        document.getElementById("daily-hourly-rate").value = "";
        document.getElementById("daily-ot-threshold").value = "";
        document.getElementById("daily-ot-multiplier").value = "";
        document.getElementById("daily-results").classList.add("hidden");
      }

      // WEEKLY
      const weekDays = ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"];

      function buildWeeklyTable() {
        const tbody = document.getElementById("weekly-tbody");
        tbody.innerHTML = "";
        weekDays.forEach((day, dIndex) => {
          for (let s = 1; s <= 3; s++) {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="px-2 py-1 border-b border-gray-200">${
            s === 1 ? day : ""
          }</td>
          <td class="px-2 py-1 border-b border-gray-200">Shift ${s}</td>
          <td class="px-2 py-1 border-b border-gray-200">
            <input type="text" class="weekly-start w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-xs" data-day="${dIndex}" data-shift="${s}" placeholder="09:00">
          </td>
          <td class="px-2 py-1 border-b border-gray-200">
            <input type="text" class="weekly-end w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-xs" data-day="${dIndex}" data-shift="${s}" placeholder="17:00">
          </td>
          <td class="px-2 py-1 border-b border-gray-200">
            <input type="number" min="0" step="1" class="weekly-break input-small w-20 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-xs" data-day="${dIndex}" data-shift="${s}" placeholder="30">
          </td>
          <td class="px-2 py-1 border-b border-gray-200 text-right">
            <span class="weekly-hours" data-day="${dIndex}" data-shift="${s}">0.00</span>
          </td>
        `;
            tbody.appendChild(tr);
          }
        });
      }

      function calcWeekly() {
        const format = document.getElementById("weekly-time-format").value;
        const rate = parseFloat(
          document.getElementById("weekly-hourly-rate").value
        );
        const dailyOT = parseFloat(
          document.getElementById("weekly-daily-ot-threshold").value
        );
        const weeklyOT = parseFloat(
          document.getElementById("weekly-weekly-ot-threshold").value
        );
        const otMult = parseFloat(
          document.getElementById("weekly-ot-multiplier").value
        );

        let totalMinutes = 0;
        let dailyMinutes = new Array(7).fill(0);

        for (let d = 0; d < 7; d++) {
          for (let s = 1; s <= 3; s++) {
            const startInput = document.querySelector(
              `.weekly-start[data-day="${d}"][data-shift="${s}"]`
            );
            const endInput = document.querySelector(
              `.weekly-end[data-day="${d}"][data-shift="${s}"]`
            );
            const breakInput = document.querySelector(
              `.weekly-break[data-day="${d}"][data-shift="${s}"]`
            );
            const hoursSpan = document.querySelector(
              `.weekly-hours[data-day="${d}"][data-shift="${s}"]`
            );
            const startStr = startInput.value;
            const endStr = endInput.value;
            const breakMin = parseInt(breakInput.value || "0", 10);
            if (!startStr && !endStr && !breakInput.value) {
              hoursSpan.textContent = "0.00";
              continue;
            }
            const start = parseTime(startStr, format);
            const end = parseTime(endStr, format);
            if (
              start === null ||
              end === null ||
              isNaN(breakMin) ||
              breakMin < 0
            ) {
              alert(
                "Please enter valid times and break minutes for all filled weekly shifts."
              );
              return;
            }
            let duration = end - start;
            if (duration < 0) duration += 24 * 60;
            let net = duration - breakMin;
            if (net < 0) net = 0;
            dailyMinutes[d] += net;
            totalMinutes += net;
            hoursSpan.textContent = minutesToHours(net).toFixed(2);
          }
        }

        const totalHours = minutesToHours(totalMinutes);

        // Daily OT
        let dailyOTMinutes = 0;
        if (!isNaN(dailyOT) && dailyOT > 0) {
          const dailyOTMinThreshold = dailyOT * 60;
          dailyMinutes.forEach((m) => {
            if (m > dailyOTMinThreshold) {
              dailyOTMinutes += m - dailyOTMinThreshold;
            }
          });
        }

        // Weekly OT
        let weeklyOTMinutes = 0;
        if (!isNaN(weeklyOT) && weeklyOT > 0) {
          const weeklyOTMinThreshold = weeklyOT * 60;
          if (totalMinutes > weeklyOTMinThreshold) {
            weeklyOTMinutes = totalMinutes - weeklyOTMinThreshold;
          }
        }

        // Avoid double-counting: treat weekly OT as additional beyond daily OT
        let otMinutes = Math.max(dailyOTMinutes, weeklyOTMinutes);
        if (otMinutes > totalMinutes) otMinutes = totalMinutes;
        const otHours = minutesToHours(otMinutes);
        const regularHours = totalHours - otHours;

        let pay = 0;
        if (!isNaN(rate) && rate > 0) {
          if (!isNaN(otMult) && otMult > 1 && otHours > 0) {
            pay = rate * regularHours + rate * otMult * otHours;
          } else {
            pay = rate * totalHours;
          }
        }

        document.getElementById("weekly-total-hours").textContent =
          totalHours.toFixed(2);
        document.getElementById("weekly-regular-hours").textContent =
          regularHours.toFixed(2);
        document.getElementById("weekly-ot-hours").textContent =
          otHours.toFixed(2);
        document.getElementById("weekly-pay").textContent = formatMoney(pay);
        document.getElementById("weekly-results").classList.remove("hidden");
      }

      function clearWeekly() {
        document
          .querySelectorAll(".weekly-start, .weekly-end, .weekly-break")
          .forEach((el) => (el.value = ""));
        document
          .querySelectorAll(".weekly-hours")
          .forEach((el) => (el.textContent = "0.00"));
        document.getElementById("weekly-hourly-rate").value = "";
        document.getElementById("weekly-daily-ot-threshold").value = "";
        document.getElementById("weekly-weekly-ot-threshold").value = "";
        document.getElementById("weekly-ot-multiplier").value = "";
        document.getElementById("weekly-results").classList.add("hidden");
      }

      // ROTATING
      function buildRotPatternInputs() {
        const container = document.getElementById("rot-days-container");
        const days = parseInt(
          document.getElementById("rot-pattern-days").value,
          10
        );
        if (isNaN(days) || days < 1 || days > 31) return;
        container.innerHTML = "";
        for (let i = 1; i <= days; i++) {
          const div = document.createElement("div");
          div.className = "border border-gray-200 rounded-md p-2";
          div.innerHTML = `
        <label class="block text-xs font-medium text-gray-700 mb-1">Day ${i} hours</label>
        <input type="number" min="0" step="0.25" class="rot-day-hours input-small w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" data-day="${i}" placeholder="e.g. 12">
      `;
          container.appendChild(div);
        }
      }

      function calcRot() {
        const patternDays = parseInt(
          document.getElementById("rot-pattern-days").value,
          10
        );
        const weeks = parseInt(document.getElementById("rot-weeks").value, 10);
        if (
          isNaN(patternDays) ||
          patternDays < 1 ||
          isNaN(weeks) ||
          weeks < 1
        ) {
          alert("Please enter a valid pattern length and number of weeks.");
          return;
        }
        const dayInputs = document.querySelectorAll(".rot-day-hours");
        let patternHours = 0;
        for (const input of dayInputs) {
          const h = parseFloat(input.value || "0");
          if (h < 0) {
            alert("Hours per day in the pattern cannot be negative.");
            return;
          }
          patternHours += h;
        }
        const totalDays = weeks * 7;
        const fullPatterns = Math.floor(totalDays / patternDays);
        const remainingDays = totalDays % patternDays;

        let totalHours = fullPatterns * patternHours;
        // Add remaining days
        for (let i = 1; i <= remainingDays; i++) {
          const input = document.querySelector(
            `.rot-day-hours[data-day="${i}"]`
          );
          if (input) {
            totalHours += parseFloat(input.value || "0");
          }
        }

        const rate = parseFloat(
          document.getElementById("rot-hourly-rate").value
        );
        const weeklyOT = parseFloat(
          document.getElementById("rot-weekly-ot-threshold").value
        );
        const otMult = parseFloat(
          document.getElementById("rot-ot-multiplier").value
        );

        const avgWeeklyHours = totalHours / weeks;
        let pay = 0;
        if (!isNaN(rate) && rate > 0) {
          if (
            !isNaN(weeklyOT) &&
            weeklyOT > 0 &&
            !isNaN(otMult) &&
            otMult > 1
          ) {
            // Approximate OT based on average weekly hours
            const regularWeekly = Math.min(avgWeeklyHours, weeklyOT);
            const otWeekly = Math.max(0, avgWeeklyHours - weeklyOT);
            const weeklyPay = rate * regularWeekly + rate * otMult * otWeekly;
            pay = weeklyPay * weeks;
          } else {
            pay = rate * totalHours;
          }
        }

        document.getElementById("rot-period-weeks").textContent =
          weeks.toString();
        document.getElementById("rot-period-days").textContent =
          totalDays.toString();
        document.getElementById("rot-total-hours").textContent =
          totalHours.toFixed(2);
        document.getElementById("rot-avg-weekly-hours").textContent =
          avgWeeklyHours.toFixed(2);
        document.getElementById("rot-pay").textContent = formatMoney(pay);
        document.getElementById("rot-results").classList.remove("hidden");
      }

      function clearRot() {
        document
          .querySelectorAll(".rot-day-hours")
          .forEach((el) => (el.value = ""));
        document.getElementById("rot-hourly-rate").value = "";
        document.getElementById("rot-weekly-ot-threshold").value = "";
        document.getElementById("rot-ot-multiplier").value = "";
        document.getElementById("rot-results").classList.add("hidden");
      }

      // Tabs
      function initTabs() {
        const buttons = document.querySelectorAll(".tab-btn");
        const panels = {
          daily: document.getElementById("tab-daily"),
          weekly: document.getElementById("tab-weekly"),
          rotating: document.getElementById("tab-rotating"),
        };
        buttons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const tab = btn.getAttribute("data-tab");
            buttons.forEach((b) => b.classList.remove("tab-active"));
            btn.classList.add("tab-active");
            Object.keys(panels).forEach((key) => {
              if (key === tab) panels[key].classList.remove("hidden");
              else panels[key].classList.add("hidden");
            });
          });
        });
      }

      // FAQ toggle (simple, independent of global script_faq)
      function initLocalFAQ() {
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.nextElementSibling;
              const sign = btn.querySelector("span:last-child");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((s) => (s.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                sign.textContent = "−";
              }
            });
          });
      }

      document.addEventListener("DOMContentLoaded", () => {
        initTabs();
        buildDailyShiftRows();
        buildWeeklyTable();
        buildRotPatternInputs();
        initLocalFAQ();

        document
          .getElementById("daily-shift-count")
          .addEventListener("change", buildDailyShiftRows);
        document
          .getElementById("daily-calc-btn")
          .addEventListener("click", calcDaily);
        document
          .getElementById("daily-clear-btn")
          .addEventListener("click", clearDaily);

        document
          .getElementById("weekly-calc-btn")
          .addEventListener("click", calcWeekly);
        document
          .getElementById("weekly-clear-btn")
          .addEventListener("click", clearWeekly);

        document
          .getElementById("rot-pattern-days")
          .addEventListener("change", buildRotPatternInputs);
        document
          .getElementById("rot-calc-btn")
          .addEventListener("click", calcRot);
        document
          .getElementById("rot-clear-btn")
          .addEventListener("click", clearRot);
      });

