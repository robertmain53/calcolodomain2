    <script>
      function formatINR(num) {
        if (!isFinite(num)) return "₹0";
        const sign = num < 0 ? "-" : "";
        num = Math.abs(num);
        const rounded = Math.round(num);
        const str = String(rounded);
        if (str.length <= 3) return sign + "₹" + str;
        const last3 = str.slice(-3);
        const rest = str.slice(0, -3);
        const restWithCommas = rest.replace(/\B(?=(\d{2})+(?!\d))/g, ",");
        return sign + "₹" + restWithCommas + "," + last3;
      }

      function recalcNPS() {
        const age =
          parseFloat(document.getElementById("current-age").value) || 0;
        const retireAge =
          parseFloat(document.getElementById("retirement-age").value) || 0;
        let years = retireAge - age;
        if (years < 0) years = 0;
        const months = years * 12;

        const monthly =
          parseFloat(document.getElementById("monthly-contribution").value) ||
          0;
        const annualReturn =
          (parseFloat(document.getElementById("expected-return").value) || 0) /
          100;
        const annuityRate =
          (parseFloat(document.getElementById("annuity-rate").value) || 0) /
          100;
        const annuityPct =
          (parseFloat(document.getElementById("annuity-percentage").value) ||
            0) / 100;
        const taxSlab =
          parseFloat(document.getElementById("tax-slab").value) || 0;

        document.getElementById("years-investing").textContent =
          years.toFixed(0);

        const totalContrib = monthly * months;
        document.getElementById("total-contributions").textContent =
          formatINR(totalContrib);

        let corpus = 0;
        if (months > 0 && annualReturn > 0) {
          const i = annualReturn / 12;
          corpus = monthly * ((Math.pow(1 + i, months) - 1) / i);
        } else {
          corpus = totalContrib;
        }
        document.getElementById("projected-corpus").textContent =
          formatINR(corpus);

        const annuityCorpus = corpus * annuityPct;
        const lumpSum = corpus - annuityCorpus;
        document.getElementById("annuity-corpus").textContent =
          formatINR(annuityCorpus);
        document.getElementById("lump-sum").textContent = formatINR(lumpSum);

        const annualPension = annuityCorpus * annuityRate;
        const monthlyPension = annualPension / 12;
        document.getElementById("annual-pension").textContent =
          formatINR(annualPension);
        document.getElementById("monthly-pension").textContent =
          formatINR(monthlyPension);

        // Tax saved estimate: cap eligible deduction at 2,00,000 (80C + 80CCD(1B) simplification)
        const annualContrib = monthly * 12;
        const eligibleDeduction = Math.min(annualContrib, 200000);
        const taxSaved = eligibleDeduction * taxSlab;
        document.getElementById("annual-tax-saved").textContent =
          formatINR(taxSaved);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const monthlyInput = document.getElementById("monthly-contribution");
        const monthlyOutput = document.getElementById(
          "monthly-contribution-output"
        );
        function updateMonthlyLabel() {
          monthlyOutput.textContent = formatINR(
            parseFloat(monthlyInput.value) || 0
          );
        }
        monthlyInput.addEventListener("input", function () {
          updateMonthlyLabel();
        });
        updateMonthlyLabel();

        document
          .getElementById("calculate-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            recalcNPS();
          });

        [
          "current-age",
          "retirement-age",
          "expected-return",
          "annuity-rate",
          "annuity-percentage",
          "tax-slab",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("change", recalcNPS);
        });

        recalcNPS();
      });
    </script>

