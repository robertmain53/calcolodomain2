    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        ?.addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          if (!menu) return;
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", String(isHidden));
        });

      // Utility: count words and characters
      function countWordsAndChars(text) {
        const trimmed = text.trim();
        if (!trimmed) return { words: 0, chars: 0 };
        const words = trimmed.split(/\s+/).filter(Boolean).length;
        const chars = text.length;
        return { words, chars };
      }

      // Input mode switching
      const modeTabs = document.querySelectorAll(".input-mode-tab");
      const modeSections = {
        text: document.getElementById("mode-text"),
        words: document.getElementById("mode-words"),
        chars: document.getElementById("mode-chars"),
      };
      let currentMode = "text";

      modeTabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const mode = tab.getAttribute("data-mode");
          if (!mode || mode === currentMode) return;
          currentMode = mode;

          modeTabs.forEach((t) => {
            t.classList.remove("border-blue-600", "text-blue-600");
            t.classList.add("border-transparent", "text-gray-600");
          });
          tab.classList.remove("border-transparent", "text-gray-600");
          tab.classList.add("border-blue-600", "text-blue-600");

          Object.entries(modeSections).forEach(([key, el]) => {
            if (!el) return;
            el.classList.toggle("hidden", key !== mode);
          });
        });
      });

      // Live word/char count for text mode
      const inputText = document.getElementById("input-text");
      const liveWordCount = document.getElementById("live-word-count");
      const liveCharCount = document.getElementById("live-char-count");

      inputText?.addEventListener("input", () => {
        const { words, chars } = countWordsAndChars(inputText.value);
        if (liveWordCount) liveWordCount.textContent = "Words: " + words;
        if (liveCharCount) liveCharCount.textContent = "Characters: " + chars;
      });

      // WPM presets
      const wpmInput = document.getElementById("wpm");
      const wpmPresetButtons = document.querySelectorAll("button[data-wpm]");
      const resetWpmBtn = document.getElementById("reset-wpm");

      function setWpm(value) {
        if (!wpmInput) return;
        wpmInput.value = value;
        document.getElementById("stat-wpm").textContent = value + " wpm";
        updateDerivedStats();
      }

      wpmPresetButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const value = parseInt(btn.getAttribute("data-wpm"), 10);
          if (!value) return;
          setWpm(value);
          wpmPresetButtons.forEach((b) => {
            b.classList.remove(
              "border-blue-500",
              "text-blue-600",
              "bg-blue-50"
            );
            b.classList.add("border-gray-300", "text-gray-700");
          });
          btn.classList.remove("border-gray-300", "text-gray-700");
          btn.classList.add("border-blue-500", "text-blue-600", "bg-blue-50");
        });
      });

      resetWpmBtn?.addEventListener("click", () => {
        setWpm(230);
        wpmPresetButtons.forEach((b) => {
          const val = parseInt(b.getAttribute("data-wpm"), 10);
          b.classList.remove("border-blue-500", "text-blue-600", "bg-blue-50");
          b.classList.add("border-gray-300", "text-gray-700");
          if (val === 230) {
            b.classList.remove("border-gray-300", "text-gray-700");
            b.classList.add("border-blue-500", "text-blue-600", "bg-blue-50");
          }
        });
      });

      // Toggle images options
      const toggleImages = document.getElementById("toggle-images");
      const imagesOptions = document.getElementById("images-options");

      toggleImages?.addEventListener("change", () => {
        if (!imagesOptions) return;
        imagesOptions.classList.toggle("hidden", !toggleImages.checked);
      });

      // Main calculation
      const calculateBtn = document.getElementById("calculate-btn");
      const clearBtn = document.getElementById("clear-btn");

      function updateDerivedStats(totalWords = null, totalSeconds = null) {
        const wpmVal = parseFloat(wpmInput?.value || "0");
        const statWps = document.getElementById("stat-wps");
        if (wpmVal > 0 && statWps) {
          const wps = wpmVal / 60;
          statWps.textContent = "Words per second: " + wps.toFixed(2);
        }

        if (totalWords !== null) {
          const statWords = document.getElementById("stat-words");
          if (statWords) statWords.textContent = "Words: " + totalWords;
        }

        if (totalSeconds !== null) {
          const labelEl = document.getElementById("label-suggestion");
          const rangeEl = document.getElementById("range-suggestion");
          const minutesExact = totalSeconds / 60;
          const roundedLabel = Math.max(1, Math.ceil(minutesExact));
          if (labelEl) labelEl.textContent = roundedLabel + " min read";

          const slower = totalSeconds * 1.1;
          const faster = totalSeconds * 0.9;
          const minSlow = Math.max(1, Math.round(slower / 60));
          const minFast = Math.max(1, Math.round(faster / 60));
          if (rangeEl) rangeEl.textContent = minFast + "–" + minSlow + " min";
        }
      }

      function formatHHMM(totalSeconds) {
        const hours = Math.floor(totalSeconds / 3600);
        const minutes = Math.floor((totalSeconds % 3600) / 60);
        const hh = String(hours).padStart(2, "0");
        const mm = String(minutes).padStart(2, "0");
        return hh + ":" + mm;
      }

      calculateBtn?.addEventListener("click", () => {
        let words = 0;
        let chars = 0;

        if (currentMode === "text") {
          const { words: w, chars: c } = countWordsAndChars(
            inputText?.value || ""
          );
          words = w;
          chars = c;
        } else if (currentMode === "words") {
          const wcInput = document.getElementById("word-count");
          const val = parseInt(wcInput?.value || "0", 10);
          words = isNaN(val) || val < 0 ? 0 : val;
          chars = 0;
        } else if (currentMode === "chars") {
          const ccInput = document.getElementById("char-count");
          const val = parseInt(ccInput?.value || "0", 10);
          chars = isNaN(val) || val < 0 ? 0 : val;
          words = Math.round(chars / 6); // approximate
        }

        const wpmVal = parseFloat(wpmInput?.value || "0");
        if (!wpmVal || wpmVal <= 0 || words <= 0) {
          document.getElementById("result-main").textContent = "0 min";
          document.getElementById("result-secondary").textContent = "0 seconds";
          document.getElementById("result-hhmm").textContent =
            "Formatted: 00:00 (hh:mm)";
          document.getElementById("stat-words").textContent = "Words: " + words;
          document.getElementById("stat-chars").textContent =
            "Characters: " + chars;
          updateDerivedStats(words, 0);
          return;
        }

        let totalSeconds = (words / wpmVal) * 60;

        if (toggleImages?.checked) {
          const imgCount = parseInt(
            document.getElementById("image-count")?.value || "0",
            10
          );
          const secPerImg = parseFloat(
            document.getElementById("seconds-per-image")?.value || "0"
          );
          if (imgCount > 0 && secPerImg > 0) {
            totalSeconds += imgCount * secPerImg;
          }
        }

        const roundedSeconds = Math.round(totalSeconds);
        const minutes = Math.floor(roundedSeconds / 60);
        const seconds = roundedSeconds % 60;

        document.getElementById("result-main").textContent =
          minutes > 0 ? minutes + " min" : seconds + " sec";
        document.getElementById("result-secondary").textContent =
          minutes + " minutes " + seconds + " seconds";
        document.getElementById("result-hhmm").textContent =
          "Formatted: " + formatHHMM(roundedSeconds) + " (hh:mm)";

        document.getElementById("stat-words").textContent = "Words: " + words;
        document.getElementById("stat-chars").textContent =
          "Characters: " + chars;
        document.getElementById("stat-wpm").textContent = wpmVal + " wpm";

        updateDerivedStats(words, roundedSeconds);
      });

      clearBtn?.addEventListener("click", () => {
        if (inputText) inputText.value = "";
        const wcInput = document.getElementById("word-count");
        const ccInput = document.getElementById("char-count");
        if (wcInput) wcInput.value = "";
        if (ccInput) ccInput.value = "";
        if (liveWordCount) liveWordCount.textContent = "Words: 0";
        if (liveCharCount) liveCharCount.textContent = "Characters: 0";

        document.getElementById("result-main").textContent = "0 min";
        document.getElementById("result-secondary").textContent = "0 seconds";
        document.getElementById("result-hhmm").textContent =
          "Formatted: 00:00 (hh:mm)";
        document.getElementById("stat-words").textContent = "Words: 0";
        document.getElementById("stat-chars").textContent = "Characters: 0";
        document.getElementById("label-suggestion").textContent = "0 min read";
        document.getElementById("range-suggestion").textContent = "0–0 min";
      });

      document.querySelectorAll(".faq-question").forEach((btn) => {
        btn.addEventListener("click", () => {
          const answer = btn.parentElement.querySelector(".faq-answer");
          if (!answer) return;
          const isHidden = answer.classList.contains("hidden");
          document
            .querySelectorAll(".faq-answer")
            .forEach((a) => a.classList.add("hidden"));
          if (isHidden) answer.classList.remove("hidden");
        });
      });

      // Initialize derived stats
      updateDerivedStats(0, 0);
    </script>

