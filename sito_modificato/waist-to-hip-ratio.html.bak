    <script>
      // State
      let currentSex = "female"; // 'female' or 'male'
      let currentUnit = "metric"; // 'metric' (cm) or 'imperial' (in)

      const sexButtons = document.querySelectorAll(".sex-btn");
      const unitButtons = document.querySelectorAll(".unit-btn");
      const waistInput = document.getElementById("waist-input");
      const hipInput = document.getElementById("hip-input");
      const calcBtn = document.getElementById("calc-btn");
      const resetBtn = document.getElementById("reset-btn");

      const whrValueEl = document.getElementById("whr-value");
      const riskLabelEl = document.getElementById("risk-label");
      const riskNoteEl = document.getElementById("risk-note");
      const shapeLabelEl = document.getElementById("shape-label");
      const waistUnitLabel = document.getElementById("waist-unit-label");
      const hipUnitLabel = document.getElementById("hip-unit-label");

      function setSex(sex) {
        currentSex = sex;
        sexButtons.forEach((btn) => {
          if (btn.dataset.sex === sex) {
            btn.classList.add("bg-blue-50", "border-blue-500", "text-blue-700");
            btn.classList.remove("border-gray-300", "text-gray-700");
          } else {
            btn.classList.remove(
              "bg-blue-50",
              "border-blue-500",
              "text-blue-700"
            );
            btn.classList.add("border-gray-300", "text-gray-700");
          }
        });
        if (whrValueEl.textContent && whrValueEl.textContent !== "–") {
          calculateWHR(); // re-interpret for new sex
        }
      }

      function setUnit(unit) {
        currentUnit = unit;
        unitButtons.forEach((btn) => {
          if (btn.dataset.unit === unit) {
            btn.classList.add("bg-blue-50", "border-blue-500", "text-blue-700");
            btn.classList.remove("border-gray-300", "text-gray-700");
          } else {
            btn.classList.remove(
              "bg-blue-50",
              "border-blue-500",
              "text-blue-700"
            );
            btn.classList.add("border-gray-300", "text-gray-700");
          }
        });
        const label = unit === "metric" ? "(cm)" : "(inches)";
        waistUnitLabel.textContent = label;
        hipUnitLabel.textContent = label;
      }

      function classifyRisk(whr, sex) {
        let category = "Unknown";
        let note = "";
        if (sex === "female") {
          if (whr < 0.8) {
            category = "Low risk";
            note = "Your WHR is in the low-risk range for most adult women.";
          } else if (whr < 0.85) {
            category = "Moderate risk";
            note = "Your WHR suggests a moderate increase in health risk.";
          } else {
            category = "High risk";
            note =
              "Your WHR is in a range associated with higher cardiometabolic risk.";
          }
        } else {
          if (whr < 0.9) {
            category = "Low risk";
            note = "Your WHR is in the low-risk range for most adult men.";
          } else if (whr < 1.0) {
            category = "Moderate risk";
            note = "Your WHR suggests a moderate increase in health risk.";
          } else {
            category = "High risk";
            note =
              "Your WHR is in a range associated with higher cardiometabolic risk.";
          }
        }
        return { category, note };
      }

      function classifyShape(whr) {
        if (!isFinite(whr)) return "–";
        if (whr < 0.75)
          return "Pronounced pear pattern (hips much larger than waist)";
        if (whr < 0.85) return "Pear pattern (hips larger than waist)";
        if (whr < 0.95) return "Balanced pattern";
        return "Apple pattern (more abdominal fat)";
      }

      function calculateWHR() {
        const waist = parseFloat(waistInput.value);
        const hip = parseFloat(hipInput.value);

        if (!waist || !hip || waist <= 0 || hip <= 0) {
          whrValueEl.textContent = "–";
          riskLabelEl.textContent = "Awaiting input";
          riskNoteEl.textContent =
            "Please enter valid waist and hip measurements.";
          shapeLabelEl.textContent = "–";
          return;
        }

        const whr = waist / hip;
        if (!isFinite(whr) || whr <= 0) {
          whrValueEl.textContent = "–";
          riskLabelEl.textContent = "Invalid values";
          riskNoteEl.textContent = "Hip measurement must be greater than zero.";
          shapeLabelEl.textContent = "–";
          return;
        }

        whrValueEl.textContent = whr.toFixed(2);

        const { category, note } = classifyRisk(whr, currentSex);
        riskLabelEl.textContent = category;
        riskNoteEl.textContent =
          note +
          " Always interpret this together with BMI, waist circumference, and medical advice.";

        shapeLabelEl.textContent = classifyShape(whr);
      }

      function resetForm() {
        waistInput.value = "";
        hipInput.value = "";
        whrValueEl.textContent = "–";
        riskLabelEl.textContent = "Awaiting input";
        riskNoteEl.textContent =
          "Enter your waist and hip measurements to see your category.";
        shapeLabelEl.textContent = "–";
      }

      sexButtons.forEach((btn) => {
        btn.addEventListener("click", () => setSex(btn.dataset.sex));
      });

      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => setUnit(btn.dataset.unit));
      });

      calcBtn.addEventListener("click", calculateWHR);
      resetBtn.addEventListener("click", resetForm);

      [waistInput, hipInput].forEach((input) => {
        input.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            calculateWHR();
          }
        });
      });

      // Initialize defaults
      setSex("female");
      setUnit("metric");
    </script>

