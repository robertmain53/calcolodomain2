    <script>
      // --- Connecticut Income Tax Calculator Logic ---
      // NOTE: Brackets are illustrative and should be updated when CT law changes.

      const ctBrackets = {
        single: [
          { upTo: 10000, rate: 0.03 },
          { upTo: 50000, rate: 0.05 },
          { upTo: 100000, rate: 0.055 },
          { upTo: 200000, rate: 0.06 },
          { upTo: 250000, rate: 0.065 },
          { upTo: 500000, rate: 0.069 },
          { upTo: Infinity, rate: 0.0699 },
        ],
        mfj: [
          { upTo: 20000, rate: 0.03 },
          { upTo: 100000, rate: 0.05 },
          { upTo: 200000, rate: 0.055 },
          { upTo: 400000, rate: 0.06 },
          { upTo: 500000, rate: 0.065 },
          { upTo: 1000000, rate: 0.069 },
          { upTo: Infinity, rate: 0.0699 },
        ],
        mfs: [
          { upTo: 10000, rate: 0.03 },
          { upTo: 50000, rate: 0.05 },
          { upTo: 100000, rate: 0.055 },
          { upTo: 200000, rate: 0.06 },
          { upTo: 250000, rate: 0.065 },
          { upTo: 500000, rate: 0.069 },
          { upTo: Infinity, rate: 0.0699 },
        ],
        hoh: [
          { upTo: 16000, rate: 0.03 },
          { upTo: 80000, rate: 0.05 },
          { upTo: 160000, rate: 0.055 },
          { upTo: 320000, rate: 0.06 },
          { upTo: 400000, rate: 0.065 },
          { upTo: 800000, rate: 0.069 },
          { upTo: Infinity, rate: 0.0699 },
        ],
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "—";
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          abs.toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function calculateCtTax(income, filingStatus) {
        const brackets = ctBrackets[filingStatus] || ctBrackets.single;
        let remaining = income;
        let lower = 0;
        let tax = 0;
        let marginalRate = 0;
        const breakdown = [];

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const upper = bracket.upTo;
          const taxableInBracket = Math.max(
            0,
            Math.min(remaining, upper - lower)
          );
          if (taxableInBracket > 0) {
            const taxInBracket = taxableInBracket * bracket.rate;
            tax += taxInBracket;
            marginalRate = bracket.rate;
            breakdown.push({
              range: [lower, upper],
              amount: taxableInBracket,
              rate: bracket.rate,
              tax: taxInBracket,
            });
            remaining -= taxableInBracket;
          }
          lower = upper;
        }

        return { tax, marginalRate, breakdown };
      }

      function updateCtBracketBreakdown(breakdown) {
        const container = document.getElementById("ct-bracket-breakdown");
        container.innerHTML = "";
        if (!breakdown || breakdown.length === 0) {
          container.textContent =
            "No Connecticut tax due at this income level.";
          return;
        }

        breakdown.forEach((b) => {
          const div = document.createElement("div");
          const [low, high] = b.range;
          const rangeLabel =
            high === Infinity
              ? `${formatMoney(low)}+`
              : `${formatMoney(low)} – ${formatMoney(high)}`;
          div.textContent = `${rangeLabel}: ${formatMoney(
            b.amount
          )} taxed at ${formatPercent(b.rate)} = ${formatMoney(b.tax)}`;
          container.appendChild(div);
        });
      }

      function handleCtCalculate() {
        const status = document.getElementById("ct-filing-status").value;
        const incomeInput = document.getElementById("ct-income");
        const creditsInput = document.getElementById("ct-credits");
        const withholdingInput = document.getElementById("ct-withholding");
        const freq = document.getElementById("ct-pay-frequency").value;
        const errorEl = document.getElementById("ct-error");

        let income = parseFloat(incomeInput.value.replace(/,/g, ""));
        let credits = parseFloat(creditsInput.value.replace(/,/g, ""));
        let withholding = parseFloat(withholdingInput.value.replace(/,/g, ""));

        if (isNaN(income) || income < 0) {
          errorEl.textContent =
            "Please enter a non‑negative Connecticut taxable income.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (isNaN(credits) || credits < 0) credits = 0;
        if (isNaN(withholding) || withholding < 0) withholding = 0;
        errorEl.classList.add("hidden");

        const {
          tax: grossTax,
          marginalRate,
          breakdown,
        } = calculateCtTax(income, status);
        const netTax = Math.max(0, grossTax - credits);

        const effectiveRate = income > 0 ? netTax / income : 0;
        const refundOrDue = withholding - netTax;

        document.getElementById("ct-tax-output").textContent =
          formatMoney(netTax);
        document.getElementById("ct-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("ct-marginal-rate").textContent =
          formatPercent(marginalRate);

        const refundEl = document.getElementById("ct-refund-due");
        const label =
          refundOrDue >= 0 ? "Estimated refund" : "Estimated amount due";
        refundEl.textContent = `${label}: ${formatMoney(refundOrDue)}`;

        // Paycheck view
        const taxPerPeriodEl = document.getElementById("ct-tax-per-period");
        const takehomePerPeriodEl = document.getElementById(
          "ct-takehome-per-period"
        );

        let periods = 1;
        if (freq === "monthly") periods = 12;
        else if (freq === "biweekly") periods = 26;
        else if (freq === "weekly") periods = 52;

        if (freq === "annual") {
          taxPerPeriodEl.textContent = "—";
          takehomePerPeriodEl.textContent = "—";
        } else {
          const taxPer = netTax / periods;
          const incomePer = income / periods;
          taxPerPeriodEl.textContent = formatMoney(taxPer);
          takehomePerPeriodEl.textContent = formatMoney(incomePer - taxPer);
        }

        updateCtBracketBreakdown(breakdown);
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("ct-calc-btn")
          .addEventListener("click", handleCtCalculate);
        // Auto-calc on load with defaults
        handleCtCalculate();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
