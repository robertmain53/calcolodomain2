    <script>
      // Mode switching
      const modes = ["spl", "intensity", "compare"];
      const modeButtons = {
        spl: document.getElementById("mode-spl"),
        intensity: document.getElementById("mode-intensity"),
        compare: document.getElementById("mode-compare"),
      };
      const panels = {
        spl: document.getElementById("panel-spl"),
        intensity: document.getElementById("panel-intensity"),
        compare: document.getElementById("panel-compare"),
      };

      function setMode(mode) {
        modes.forEach((m) => {
          if (m === mode) {
            modeButtons[m].classList.add("toggle-btn-active");
            panels[m].classList.remove("hidden");
          } else {
            modeButtons[m].classList.remove("toggle-btn-active");
            panels[m].classList.add("hidden");
          }
        });
      }

      modeButtons.spl.addEventListener("click", () => setMode("spl"));
      modeButtons.intensity.addEventListener("click", () =>
        setMode("intensity")
      );
      modeButtons.compare.addEventListener("click", () => setMode("compare"));

      // SPL calculation
      document.getElementById("calc-spl").addEventListener("click", () => {
        const L1 = parseFloat(document.getElementById("spl1").value);
        const r1 = parseFloat(document.getElementById("r1").value);
        const r2 = parseFloat(document.getElementById("r2").value);
        const unit = document.getElementById("spl-unit").value;

        if (
          !isFinite(L1) ||
          !isFinite(r1) ||
          !isFinite(r2) ||
          r1 <= 0 ||
          r2 <= 0
        ) {
          alert("Please enter valid positive numbers for level and distances.");
          return;
        }

        const deltaL = 20 * Math.log10(r1 / r2);
        const L2 = L1 + deltaL;

        const deltaElem = document.getElementById("deltaL");
        const deltaDesc = document.getElementById("deltaL-desc");
        const L2Elem = document.getElementById("spl2");
        const L2UnitElem = document.getElementById("spl2-unit");
        const L2Desc = document.getElementById("spl2-desc");

        deltaElem.textContent = deltaL.toFixed(2);
        if (deltaL < 0) {
          deltaDesc.textContent = `Sound level decreases by ${Math.abs(
            deltaL
          ).toFixed(2)} dB from r₁ to r₂.`;
        } else if (deltaL > 0) {
          deltaDesc.textContent = `Sound level increases by ${deltaL.toFixed(
            2
          )} dB from r₁ to r₂.`;
        } else {
          deltaDesc.textContent = "No change in level (r₁ and r₂ are equal).";
        }

        L2Elem.textContent = L2.toFixed(2);
        L2UnitElem.textContent = unit;
        L2Desc.textContent = `Predicted level at r₂ = ${r2} (same units as r₁), assuming a point source in a free field.`;

        document.getElementById("spl-results").classList.remove("hidden");
      });

      // Intensity calculation
      document
        .getElementById("calc-intensity")
        .addEventListener("click", () => {
          const I1 = parseFloat(document.getElementById("i1").value);
          const r1 = parseFloat(document.getElementById("ri1").value);
          const r2 = parseFloat(document.getElementById("ri2").value);
          const unit = document.getElementById("i-unit").value;

          if (
            !isFinite(I1) ||
            !isFinite(r1) ||
            !isFinite(r2) ||
            I1 <= 0 ||
            r1 <= 0 ||
            r2 <= 0
          ) {
            alert(
              "Please enter valid positive numbers for intensity and distances."
            );
            return;
          }

          const ratio = (r1 * r1) / (r2 * r2);
          const I2 = I1 * ratio;

          document.getElementById("i-ratio").textContent = ratio.toFixed(4);
          document.getElementById("i2").textContent = I2.toExponential(4);
          document.getElementById("i2-unit").textContent =
            unit === "W/m²" ? "W/m²" : "(relative)";
          document.getElementById(
            "i2-desc"
          ).textContent = `Intensity at r₂ is ${ratio.toFixed(
            4
          )} times the intensity at r₁, assuming inverse square spreading.`;

          document
            .getElementById("intensity-results")
            .classList.remove("hidden");
        });

      // Compare mode
      document.getElementById("calc-compare").addEventListener("click", () => {
        const r1 = parseFloat(document.getElementById("rc1").value);
        const r2 = parseFloat(document.getElementById("rc2").value);

        if (!isFinite(r1) || !isFinite(r2) || r1 <= 0 || r2 <= 0) {
          alert("Please enter valid positive distances.");
          return;
        }

        const rRatio = r2 / r1;
        const deltaL = 20 * Math.log10(r1 / r2);
        const iRatio = (r1 * r1) / (r2 * r2);

        document.getElementById("cmp-r-ratio").textContent = rRatio.toFixed(3);
        document.getElementById("cmp-deltaL").textContent = deltaL.toFixed(2);
        document.getElementById("cmp-i-ratio").textContent = iRatio.toFixed(4);

        const deltaDesc = document.getElementById("cmp-deltaL-desc");
        if (deltaL < 0) {
          deltaDesc.textContent = `Sound at r₂ is ${Math.abs(deltaL).toFixed(
            2
          )} dB quieter than at r₁.`;
        } else if (deltaL > 0) {
          deltaDesc.textContent = `Sound at r₂ is ${deltaL.toFixed(
            2
          )} dB louder than at r₁.`;
        } else {
          deltaDesc.textContent = "No change in level (r₁ and r₂ are equal).";
        }

        const iDesc = document.getElementById("cmp-i-ratio-desc");
        if (iRatio < 1) {
          iDesc.textContent = `Intensity at r₂ is ${(1 / iRatio).toFixed(
            2
          )} times lower than at r₁.`;
        } else if (iRatio > 1) {
          iDesc.textContent = `Intensity at r₂ is ${iRatio.toFixed(
            2
          )} times higher than at r₁.`;
        } else {
          iDesc.textContent = "Intensity is the same at r₁ and r₂.";
        }

        document.getElementById("compare-results").classList.remove("hidden");
      });

      // Default mode
      setMode("spl");

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
