  // Mini compound interest explorer
  function formatMoney(value) {
    return value.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function updateMiniCompound() {
    const P = parseFloat(document.getElementById('mini-principal').value) || 0;
    const rAnnual = parseFloat(document.getElementById('mini-rate').value) || 0;
    const years = parseFloat(document.getElementById('mini-years').value) || 0;
    const m = parseInt(document.getElementById('mini-compound').value, 10) || 1;

    const r = rAnnual / 100 / m;
    const n = years * m;
    const FV = P * Math.pow(1 + r, n);
    const interest = FV - P;

    const resultEl = document.getElementById('mini-result');
    if (isFinite(FV) && FV > 0) {
      resultEl.textContent = `Future value: $${formatMoney(FV)} (total interest: $${formatMoney(interest)})`;
    } else {
      resultEl.textContent = 'Enter valid positive values to see the result.';
    }
  }

  document.getElementById('mini-calc-btn').addEventListener('click', updateMiniCompound);
  ['mini-principal','mini-rate','mini-years','mini-compound'].forEach(id => {
    document.getElementById(id).addEventListener('change', updateMiniCompound);
  });
</script>

