    <script>
      // Simple helpers for numeric parsing
      function val(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isNaN(v) ? 0 : v;
      }

      function round(val, digits = 1) {
        const f = Math.pow(10, digits);
        return Math.round(val * f) / f;
      }

      function updateSlopeVisibility() {
        const roofType = document.getElementById("roofType").value;
        const slopeContainer = document.getElementById("slopeContainer");
        if (roofType === "flat") {
          slopeContainer.classList.add("opacity-60");
        } else {
          slopeContainer.classList.remove("opacity-60");
        }
      }

      document
        .getElementById("roofType")
        .addEventListener("change", updateSlopeVisibility);
      updateSlopeVisibility();

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("snowForm").reset();
        document.getElementById("resultsSection").classList.add("hidden");
      });

      document.getElementById("calcBtn").addEventListener("click", () => {
        const pg = val("pg");
        if (pg <= 0) {
          alert("Please enter a positive ground snow load pg.");
          return;
        }

        // Exposure factor Ce (approximate)
        const exposure = document.getElementById("exposure").value;
        let Ce = 1.0;
        if (exposure === "B") Ce = 1.0;
        else if (exposure === "C") Ce = 0.9;
        else if (exposure === "D") Ce = 0.8;

        // Thermal factor Ct (approximate)
        const thermal = document.getElementById("thermal").value;
        let Ct = 1.0;
        if (thermal === "unheated") Ct = 1.2;
        else if (thermal === "ventilated") Ct = 1.0;
        else if (thermal === "warm") Ct = 0.85;

        const Is =
          parseFloat(document.getElementById("importance").value) || 1.0;

        // Base flat roof load
        let pf = 0.7 * Ce * Ct * Is * pg;

        // Minimum flat roof load
        const minPfInput = document.getElementById("minPf").value;
        let pfMin = minPfInput ? parseFloat(minPfInput) : 20; // typical minimum
        if (isNaN(pfMin)) pfMin = 20;
        if (pf < pfMin) pf = pfMin;

        // Slope factor Cs
        const roofType = document.getElementById("roofType").value;
        let Cs = 1.0;
        let slopeDeg = val("slope");
        if (roofType === "flat") {
          slopeDeg = Math.min(slopeDeg, 5); // treat as flat
          Cs = 1.0;
        } else {
          if (slopeDeg <= 15) Cs = 1.0;
          else if (slopeDeg <= 30) {
            // linear from 1.0 at 15° to 0.7 at 30°
            Cs = 1.0 - (slopeDeg - 15) * (0.3 / 15);
          } else if (slopeDeg <= 60) {
            // linear from 0.7 at 30° to 0.2 at 60°
            Cs = 0.7 - (slopeDeg - 30) * (0.5 / 30);
          } else {
            Cs = 0.0;
          }
          if (Cs < 0) Cs = 0;
        }

        const proom = pf * Cs; // sloped roof balanced load

        // Drift surcharge (simplified)
        const driftType = document.getElementById("driftType").value;
        const hDiff = val("driftHeight");
        let hd = 0;
        let pd = 0;

        if (driftType !== "none" && hDiff > 0) {
          // Estimate drift height as some fraction of height difference, capped
          hd = Math.min(hDiff, 8); // cap drift height to 8 ft for sanity
          // Simplified drift surcharge
          pd = 0.43 * Math.sqrt(pg) * hd;
          // Cap pd to, say, 4 * pf to avoid extreme values
          const pfBase = pf;
          const pdMax = 4 * pfBase;
          if (pd > pdMax) pd = pdMax;
        }

        // Rain-on-snow surcharge
        const rainOnSnow = document.getElementById("rainOnSnow").value;
        let pr = 0;
        if (rainOnSnow === "yes") {
          pr = 5; // psf
        }

        // Balanced roof load used
        const roofBalanced = roofType === "flat" ? pf : proom;

        // Maximum local load
        const pmax = roofBalanced + pd + pr;

        // Update outputs
        document.getElementById("pfResult").textContent = round(
          roofBalanced,
          1
        ).toFixed(1);
        document.getElementById("pmaxResult").textContent = round(
          pmax,
          1
        ).toFixed(1);

        document.getElementById("pgOut").textContent = round(pg, 1).toFixed(1);
        document.getElementById("ceOut").textContent = Ce.toFixed(2);
        document.getElementById("ctOut").textContent = Ct.toFixed(2);
        document.getElementById("isOut").textContent = Is.toFixed(2);
        document.getElementById("csOut").textContent = Cs.toFixed(2);
        document.getElementById("pdOut").textContent = round(pd, 1).toFixed(1);
        document.getElementById("hdOut").textContent = round(hd, 2).toFixed(2);
        document.getElementById("prOut").textContent = round(pr, 1).toFixed(1);
        document.getElementById("pfMinOut").textContent = round(
          pfMin,
          1
        ).toFixed(1);

        document.getElementById("resultsSection").classList.remove("hidden");
        document
          .getElementById("resultsSection")
          .scrollIntoView({ behavior: "smooth", block: "start" });
      });

