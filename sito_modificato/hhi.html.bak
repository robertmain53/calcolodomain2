    <script>
      // Utility functions
      function parseShare(value, mode) {
        if (value === "") return NaN;
        const num = Number(value);
        if (!isFinite(num)) return NaN;
        if (mode === "percent") {
          if (num < 0 || num > 100) return NaN;
          return num;
        } else {
          if (num < 0 || num > 1) return NaN;
          return num;
        }
      }

      function computeHHI(shares, mode) {
        if (mode === "percent") {
          let sumSq = 0;
          for (const s of shares) sumSq += s * s;
          return {
            hhi10000: sumSq,
            hhi1: sumSq / 10000,
          };
        } else {
          let sumSq = 0;
          for (const m of shares) sumSq += m * m;
          return {
            hhi1: sumSq,
            hhi10000: sumSq * 10000,
          };
        }
      }

      function interpretHHI(hhi10000) {
        if (!isFinite(hhi10000)) return "—";
        if (hhi10000 < 1500) return "Unconcentrated market (competitive)";
        if (hhi10000 < 2500) return "Moderately concentrated market";
        return "Highly concentrated market";
      }

      function mergerFlag(preHHI, postHHI) {
        if (!isFinite(preHHI) || !isFinite(postHHI)) return "—";
        const delta = postHHI - preHHI;
        if (postHHI < 1500) {
          return "Unconcentrated market – mergers here rarely raise concentration concerns.";
        } else if (postHHI < 2500) {
          if (delta < 100)
            return "Moderately concentrated – small ΔHHI; usually low concern.";
          if (delta < 200)
            return "Moderately concentrated – moderate ΔHHI; may warrant a closer look.";
          return "Moderately concentrated – large ΔHHI; could raise antitrust concerns.";
        } else {
          if (delta < 100)
            return "Highly concentrated – small ΔHHI; some scrutiny possible.";
          if (delta < 200)
            return "Highly concentrated – moderate ΔHHI; likely to attract regulatory attention.";
          return "Highly concentrated – large ΔHHI; often a significant antitrust concern.";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const modePercentBtn = document.getElementById("mode-percent");
        const modeDecimalBtn = document.getElementById("mode-decimal");
        const shareUnitLabel = document.getElementById("share-unit-label");
        const shareSumEl = document.getElementById("share-sum");
        const shareSumUnitEl = document.getElementById("share-sum-unit");
        const firmRowsTbody = document.getElementById("firm-rows");
        const mergeRowsTbody = document.getElementById("merge-rows");
        const addFirmBtn = document.getElementById("add-firm");
        const resetFirmsBtn = document.getElementById("reset-firms");
        const calcHHIBtn = document.getElementById("calculate-hhi");
        const resultsSection = document.getElementById("results-section");
        const errorBox = document.getElementById("error-box");
        const hhi10000El = document.getElementById("hhi-10000");
        const hhi1El = document.getElementById("hhi-1");
        const interpEl = document.getElementById("hhi-interpretation");
        const calcMergerBtn = document.getElementById("calculate-merger");
        const mergerResults = document.getElementById("merger-results");
        const preHHIEl = document.getElementById("pre-hhi");
        const postHHIEl = document.getElementById("post-hhi");
        const deltaHHIEl = document.getElementById("delta-hhi");
        const mergerFlagEl = document.getElementById("merger-flag");

        let mode = "percent"; // 'percent' or 'decimal'
        let firmIdCounter = 1;

        function showError(msg) {
          errorBox.textContent = msg;
          errorBox.classList.remove("hidden");
        }

        function clearError() {
          errorBox.classList.add("hidden");
          errorBox.textContent = "";
        }

        function updateMode(newMode) {
          mode = newMode;
          if (mode === "percent") {
            modePercentBtn.classList.add("bg-blue-600", "text-white");
            modePercentBtn.classList.remove("bg-white", "text-gray-700");
            modeDecimalBtn.classList.remove("bg-blue-600", "text-white");
            modeDecimalBtn.classList.add("bg-white", "text-gray-700");
            shareUnitLabel.textContent = "(%)";
            shareSumUnitEl.textContent = "%";
          } else {
            modeDecimalBtn.classList.add("bg-blue-600", "text-white");
            modeDecimalBtn.classList.remove("bg-white", "text-gray-700");
            modePercentBtn.classList.remove("bg-blue-600", "text-white");
            modePercentBtn.classList.add("bg-white", "text-gray-700");
            shareUnitLabel.textContent = "(0–1)";
            shareSumUnitEl.textContent = "";
          }
          recalcShareSum();
        }

        function addFirmRow(name = "") {
          const id = firmIdCounter++;
          const tr = document.createElement("tr");
          tr.dataset.firmId = String(id);
          tr.innerHTML = `
        <td class="px-3 py-2 border-b">
          <input type="text" class="w-full border border-gray-200 rounded px-2 py-1 text-sm firm-name" value="${
            name || "Firm " + id
          }">
        </td>
        <td class="px-3 py-2 border-b">
          <input type="number" step="any" min="0" class="w-full border border-gray-200 rounded px-2 py-1 text-sm firm-share" placeholder="${
            mode === "percent" ? "e.g. 25" : "e.g. 0.25"
          }">
        </td>
        <td class="px-3 py-2 border-b">
          <button type="button" class="text-xs text-red-600 hover:underline remove-firm">Remove</button>
        </td>
      `;
          firmRowsTbody.appendChild(tr);

          // Mirror row in merger table
          const mtr = document.createElement("tr");
          mtr.dataset.firmId = String(id);
          mtr.innerHTML = `
        <td class="px-3 py-2 border-b">
          <input type="checkbox" class="merge-checkbox">
        </td>
        <td class="px-3 py-2 border-b">
          <span class="merge-name">${name || "Firm " + id}</span>
        </td>
        <td class="px-3 py-2 border-b">
          <span class="merge-share">—</span>
        </td>
      `;
          mergeRowsTbody.appendChild(mtr);
        }

        function syncMergeTable() {
          const firmRows = firmRowsTbody.querySelectorAll("tr");
          firmRows.forEach((fr) => {
            const id = fr.dataset.firmId;
            const nameInput = fr.querySelector(".firm-name");
            const shareInput = fr.querySelector(".firm-share");
            const mtr = mergeRowsTbody.querySelector(
              `tr[data-firm-id="${id}"]`
            );
            if (!mtr) return;
            const nameSpan = mtr.querySelector(".merge-name");
            const shareSpan = mtr.querySelector(".merge-share");
            nameSpan.textContent = nameInput.value || `Firm ${id}`;
            const val = shareInput.value.trim();
            shareSpan.textContent =
              val === "" ? "—" : val + (mode === "percent" ? "%" : "");
          });
        }

        function recalcShareSum() {
          let sum = 0;
          const inputs = firmRowsTbody.querySelectorAll(".firm-share");
          inputs.forEach((inp) => {
            const v = inp.value.trim();
            if (v === "") return;
            const parsed = parseShare(v, mode);
            if (!isNaN(parsed)) sum += parsed;
          });
          if (mode === "percent") {
            shareSumEl.textContent = sum.toFixed(2).replace(/\.00$/, "");
          } else {
            shareSumEl.textContent = sum
              .toFixed(4)
              .replace(/0+$/, "")
              .replace(/\.$/, "");
          }
          syncMergeTable();
        }

        function collectShares() {
          const shares = [];
          const names = [];
          const rows = firmRowsTbody.querySelectorAll("tr");
          rows.forEach((fr) => {
            const nameInput = fr.querySelector(".firm-name");
            const shareInput = fr.querySelector(".firm-share");
            const raw = shareInput.value.trim();
            if (raw === "") return;
            const parsed = parseShare(raw, mode);
            if (!isNaN(parsed)) {
              shares.push(parsed);
              names.push(nameInput.value || "Firm");
            }
          });
          return { shares, names };
        }

        // Event listeners
        modePercentBtn.addEventListener("click", () => updateMode("percent"));
        modeDecimalBtn.addEventListener("click", () => updateMode("decimal"));

        addFirmBtn.addEventListener("click", () => {
          addFirmRow();
        });

        resetFirmsBtn.addEventListener("click", () => {
          firmRowsTbody.innerHTML = "";
          mergeRowsTbody.innerHTML = "";
          firmIdCounter = 1;
          addFirmRow("Firm 1");
          addFirmRow("Firm 2");
          addFirmRow("Firm 3");
          clearError();
          resultsSection.classList.add("hidden");
          mergerResults.classList.add("hidden");
          recalcShareSum();
        });

        firmRowsTbody.addEventListener("input", (e) => {
          if (
            e.target.classList.contains("firm-share") ||
            e.target.classList.contains("firm-name")
          ) {
            recalcShareSum();
          }
        });

        firmRowsTbody.addEventListener("click", (e) => {
          if (e.target.classList.contains("remove-firm")) {
            const tr = e.target.closest("tr");
            const id = tr.dataset.firmId;
            tr.remove();
            const mtr = mergeRowsTbody.querySelector(
              `tr[data-firm-id="${id}"]`
            );
            if (mtr) mtr.remove();
            recalcShareSum();
          }
        });

        calcHHIBtn.addEventListener("click", () => {
          clearError();
          const { shares } = collectShares();
          if (shares.length === 0) {
            showError(
              "Please enter at least one valid firm share before calculating HHI."
            );
            resultsSection.classList.add("hidden");
            return;
          }
          const sum = shares.reduce((a, b) => a + b, 0);
          if (mode === "percent" && (sum < 95 || sum > 105)) {
            showError(
              "Warning: the sum of market shares is far from 100%. Check that you entered all major firms and used percentages, not decimals."
            );
          } else if (mode === "decimal" && (sum < 0.95 || sum > 1.05)) {
            showError(
              "Warning: the sum of market shares is far from 1.0. Check that you entered all major firms and used decimals, not percentages."
            );
          }

          const { hhi10000, hhi1 } = computeHHI(shares, mode);
          hhi10000El.textContent = hhi10000.toFixed(0);
          hhi1El.textContent = hhi1.toFixed(4);
          interpEl.textContent = interpretHHI(hhi10000);
          resultsSection.classList.remove("hidden");
          // Reset merger results when base HHI changes
          mergerResults.classList.add("hidden");
        });

        calcMergerBtn.addEventListener("click", () => {
          clearError();
          const { shares } = collectShares();
          if (shares.length === 0) {
            showError(
              "Enter firm shares and calculate HHI before analyzing a merger."
            );
            return;
          }
          const checkboxes = mergeRowsTbody.querySelectorAll(".merge-checkbox");
          const selectedIds = [];
          checkboxes.forEach((cb) => {
            if (cb.checked) {
              const tr = cb.closest("tr");
              selectedIds.push(tr.dataset.firmId);
            }
          });
          if (selectedIds.length < 2) {
            showError("Select at least two firms to merge.");
            return;
          }

          // Build arrays of shares per firm row order
          const rows = Array.from(firmRowsTbody.querySelectorAll("tr"));
          const firmShares = [];
          rows.forEach((fr) => {
            const shareInput = fr.querySelector(".firm-share");
            const raw = shareInput.value.trim();
            const parsed = parseShare(raw, mode);
            firmShares.push(isNaN(parsed) ? 0 : parsed);
          });

          // Pre-merger HHI
          const { hhi10000: preHHI } = computeHHI(firmShares, mode);

          // Post-merger: combine selected firms into one
          let mergedShares = [];
          let mergedTotal = 0;
          rows.forEach((fr, idx) => {
            const id = fr.dataset.firmId;
            const share = firmShares[idx];
            if (selectedIds.includes(id)) {
              mergedTotal += share;
            } else {
              mergedShares.push(share);
            }
          });
          if (mergedTotal <= 0) {
            showError(
              "Selected firms must have positive market shares to compute merger impact."
            );
            return;
          }
          mergedShares.push(mergedTotal);
          const { hhi10000: postHHI } = computeHHI(mergedShares, mode);
          const delta = postHHI - preHHI;

          preHHIEl.textContent = preHHI.toFixed(0);
          postHHIEl.textContent = postHHI.toFixed(0);
          deltaHHIEl.textContent = (delta >= 0 ? "+" : "") + delta.toFixed(0);
          mergerFlagEl.textContent = mergerFlag(preHHI, postHHI);
          mergerResults.classList.remove("hidden");
        });

        // Initialize with three default firms
        resetFirmsBtn.click();
      });
    </script>

