    <script>
      // Constants
      const K_BOLTZ = 1.38064852e-23; // J/K

      function toNumber(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isNaN(v) ? 0 : v;
      }

      function calcLinkBudget() {
        // Inputs
        const fVal = toNumber("freq");
        const fUnit = document.getElementById("freqUnit").value;
        const dVal = toNumber("distance");
        const dUnit = document.getElementById("distanceUnit").value;
        const ptxVal = toNumber("ptx");
        const ptxUnit = document.getElementById("ptxUnit").value;
        const gtx = toNumber("gtx");
        const grx = toNumber("grx");
        const miscLoss = toNumber("miscLoss");
        const Tsys = Math.max(toNumber("sysTemp"), 1); // avoid log(0)
        const B_MHz = Math.max(toNumber("bandwidth"), 0.000001);
        const Rb_Mbps = Math.max(toNumber("dataRate"), 0.000001);
        const requiredEbN0 = toNumber("requiredEbN0");
        const implLoss = toNumber("implementationLoss");

        // Normalize units
        const f_GHz = fUnit === "MHz" ? fVal / 1000.0 : fVal;
        const d_km = dUnit === "m" ? dVal / 1000.0 : dVal;

        // Transmit power in dBW
        let Ptx_dBW;
        if (ptxUnit === "dBm") {
          Ptx_dBW = ptxVal - 30.0;
        } else {
          Ptx_dBW = ptxVal;
        }

        // FSPL
        const fspl =
          92.45 +
          20 * Math.log10(Math.max(d_km, 1e-9)) +
          20 * Math.log10(Math.max(f_GHz, 1e-9));

        // EIRP and received power
        const eirp_dBW = Ptx_dBW + gtx;
        const totalLoss = fspl + miscLoss;
        const linkGain = gtx + grx - totalLoss;
        const Prx_dBW = Ptx_dBW + gtx + grx - totalLoss;

        // Noise calculations
        const B_Hz = B_MHz * 1e6;
        const Rb_bps = Rb_Mbps * 1e6;

        const N0_W = K_BOLTZ * Tsys;
        const N0_dBW_per_Hz = 10 * Math.log10(N0_W);

        const N_W = K_BOLTZ * Tsys * B_Hz;
        const N_dBW = 10 * Math.log10(N_W);

        const snr_dB = Prx_dBW - N_dBW;

        // Eb/N0: Eb/N0 = SNR - 10*log10(Rb/B)
        const ratioRbB = Rb_bps / B_Hz;
        const ebn0_dB = snr_dB - 10 * Math.log10(Math.max(ratioRbB, 1e-12));

        const fadeMargin = ebn0_dB - requiredEbN0 - implLoss;

        // Update UI
        document.getElementById("fsplOut").textContent =
          fspl.toFixed(2) + " dB";
        document.getElementById("eirpOut").textContent =
          eirp_dBW.toFixed(2) + " dBW";
        document.getElementById("linkGainOut").textContent =
          linkGain.toFixed(2) + " dB";
        document.getElementById("prxOut").textContent =
          Prx_dBW.toFixed(2) + " dBW";

        document.getElementById("n0Out").textContent =
          N0_dBW_per_Hz.toFixed(2) + " dBW/Hz";
        document.getElementById("noiseOut").textContent =
          N_dBW.toFixed(2) + " dBW";
        document.getElementById("snrOut").textContent =
          snr_dB.toFixed(2) + " dB";
        document.getElementById("ebn0Out").textContent =
          ebn0_dB.toFixed(2) + " dB";
        document.getElementById("marginOut").textContent =
          fadeMargin.toFixed(2) + " dB";

        const statusEl = document.getElementById("marginStatus");
        if (isNaN(fadeMargin)) {
          statusEl.textContent = "";
          statusEl.className = "mt-2 text-xs font-medium";
        } else if (fadeMargin >= 5) {
          statusEl.textContent =
            "Link margin is healthy. You have comfortable headroom for fading and implementation losses.";
          statusEl.className = "mt-2 text-xs font-medium text-green-700";
        } else if (fadeMargin >= 0) {
          statusEl.textContent =
            "Link is just meeting the required Eb/N0. Consider adding a few dB of margin for reliability.";
          statusEl.className = "mt-2 text-xs font-medium text-yellow-700";
        } else {
          statusEl.textContent =
            "Link budget does not meet the required Eb/N0. Increase EIRP, antenna gain, or reduce losses / data rate.";
          statusEl.className = "mt-2 text-xs font-medium text-red-700";
        }
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", function (e) {
          e.preventDefault();
          calcLinkBudget();
        });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("freq").value = 12.0;
          document.getElementById("freqUnit").value = "GHz";
          document.getElementById("distance").value = 39000;
          document.getElementById("distanceUnit").value = "km";
          document.getElementById("ptx").value = 40;
          document.getElementById("ptxUnit").value = "dBm";
          document.getElementById("gtx").value = 35;
          document.getElementById("grx").value = 40;
          document.getElementById("miscLoss").value = 3;
          document.getElementById("sysTemp").value = 500;
          document.getElementById("bandwidth").value = 36;
          document.getElementById("dataRate").value = 10;
          document.getElementById("requiredEbN0").value = 6;
          document.getElementById("implementationLoss").value = 1;
          calcLinkBudget();
        });

      // Initial calculation
      calcLinkBudget();
    </script>

