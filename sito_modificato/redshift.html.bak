    <script>
      // Physical constants
      const C_MS = 299792458; // speed of light in m/s
      const C_KM_S = C_MS / 1000;
      const MPC_TO_M = 3.0856775814913673e22;
      const LY_PER_M = 1 / 9.4607304725808e15;

      function unitToMeters(value, unit) {
        const v = Number(value);
        if (!isFinite(v)) return NaN;
        switch (unit) {
          case "nm":
            return v * 1e-9;
          case "angstrom":
            return v * 1e-10;
          case "um":
            return v * 1e-6;
          default:
            return NaN;
        }
      }

      function metersToUnit(m, unit) {
        if (!isFinite(m)) return NaN;
        switch (unit) {
          case "nm":
            return m * 1e9;
          case "angstrom":
            return m * 1e10;
          case "um":
            return m * 1e6;
          default:
            return NaN;
        }
      }

      function betaFromZ(z) {
        const onePlusZ = 1 + z;
        const num = onePlusZ * onePlusZ - 1;
        const den = onePlusZ * onePlusZ + 1;
        return num / den;
      }

      function zFromBeta(beta) {
        const num = 1 + beta;
        const den = 1 - beta;
        if (den <= 0) return NaN;
        return Math.sqrt(num / den) - 1;
      }

      function formatNumber(x, digits = 4) {
        if (!isFinite(x)) return "–";
        if (Math.abs(x) >= 1e4 || (Math.abs(x) < 1e-3 && x !== 0)) {
          return x.toExponential(digits - 1);
        }
        return x.toFixed(digits);
      }

      function updateModeVisibility() {
        const mode = document.getElementById("mode").value;
        document
          .getElementById("inputs-wavelength")
          .classList.toggle("hidden", mode !== "wavelength");
        document
          .getElementById("inputs-z")
          .classList.toggle("hidden", mode !== "z");
        document
          .getElementById("inputs-velocity")
          .classList.toggle("hidden", mode !== "velocity");
      }

      function resetCalculator() {
        document.getElementById("mode").value = "wavelength";
        document.getElementById("lambda-rest").value = 656.28;
        document.getElementById("lambda-rest-unit").value = "nm";
        document.getElementById("lambda-obs").value = 700;
        document.getElementById("lambda-obs-unit").value = "nm";
        document.getElementById("z-input").value = 0.1;
        document.getElementById("lambda-rest-z").value = "";
        document.getElementById("lambda-rest-z-unit").value = "nm";
        document.getElementById("v-input").value = 30000;
        document.getElementById("v-unit").value = "km_s";
        document.getElementById("lambda-rest-v").value = "";
        document.getElementById("lambda-rest-v-unit").value = "nm";
        document.getElementById("h0").value = 70;
        updateModeVisibility();
        document.getElementById("result-z").textContent = "z: –";
        document.getElementById("result-v").textContent =
          "Relativistic radial velocity v: –";
        document.getElementById("result-beta").textContent = "v / c: –";
        document.getElementById("result-lambda-rest").innerHTML =
          "λ<sub>emit</sub>: –";
        document.getElementById("result-lambda-obs").innerHTML =
          "λ<sub>obs</sub>: –";
        document.getElementById("result-distance").textContent =
          "Approx. distance (Hubble’s law): –";
      }

      function calculate() {
        const mode = document.getElementById("mode").value;
        const h0 = Number(document.getElementById("h0").value);
        let z = NaN;
        let lambdaEmit_m = NaN;
        let lambdaObs_m = NaN;

        if (!isFinite(h0) || h0 <= 0) {
          alert("Please enter a valid positive value for H₀.");
          return;
        }

        if (mode === "wavelength") {
          const leVal = document.getElementById("lambda-rest").value;
          const leUnit = document.getElementById("lambda-rest-unit").value;
          const loVal = document.getElementById("lambda-obs").value;
          const loUnit = document.getElementById("lambda-obs-unit").value;
          lambdaEmit_m = unitToMeters(leVal, leUnit);
          lambdaObs_m = unitToMeters(loVal, loUnit);
          if (
            !isFinite(lambdaEmit_m) ||
            !isFinite(lambdaObs_m) ||
            lambdaEmit_m <= 0 ||
            lambdaObs_m <= 0
          ) {
            alert("Please enter valid positive wavelengths.");
            return;
          }
          z = (lambdaObs_m - lambdaEmit_m) / lambdaEmit_m;
        } else if (mode === "z") {
          z = Number(document.getElementById("z-input").value);
          if (!isFinite(z) || z <= -1) {
            alert("Please enter a valid redshift z > -1.");
            return;
          }
          const leVal = document.getElementById("lambda-rest-z").value;
          const leUnit = document.getElementById("lambda-rest-z-unit").value;
          if (leVal !== "") {
            lambdaEmit_m = unitToMeters(leVal, leUnit);
            if (!isFinite(lambdaEmit_m) || lambdaEmit_m <= 0) {
              alert("Please enter a valid positive rest wavelength.");
              return;
            }
            lambdaObs_m = lambdaEmit_m * (1 + z);
          }
        } else if (mode === "velocity") {
          let v = Number(document.getElementById("v-input").value);
          const vUnit = document.getElementById("v-unit").value;
          if (!isFinite(v)) {
            alert("Please enter a valid velocity.");
            return;
          }
          let beta;
          if (vUnit === "km_s") {
            beta = v / C_KM_S;
          } else {
            beta = v;
            v = beta * C_KM_S;
          }
          if (!isFinite(beta) || Math.abs(beta) >= 1) {
            alert("Velocity must be less than the speed of light (|v| < c).");
            return;
          }
          z = zFromBeta(beta);
          const leVal = document.getElementById("lambda-rest-v").value;
          const leUnit = document.getElementById("lambda-rest-v-unit").value;
          if (leVal !== "") {
            lambdaEmit_m = unitToMeters(leVal, leUnit);
            if (!isFinite(lambdaEmit_m) || lambdaEmit_m <= 0) {
              alert("Please enter a valid positive rest wavelength.");
              return;
            }
            lambdaObs_m = lambdaEmit_m * (1 + z);
          }
        }

        const beta = betaFromZ(z);
        const v_km_s = beta * C_KM_S;

        // Distance via Hubble's law: d = v / H0
        const d_Mpc = v_km_s / h0;
        const d_m = d_Mpc * MPC_TO_M;
        const d_ly = d_m * LY_PER_M;
        const d_Mly = d_ly / 1e6;

        // If we have only one wavelength, compute the other
        if (isFinite(lambdaEmit_m) && !isFinite(lambdaObs_m)) {
          lambdaObs_m = lambdaEmit_m * (1 + z);
        } else if (!isFinite(lambdaEmit_m) && isFinite(lambdaObs_m)) {
          lambdaEmit_m = lambdaObs_m / (1 + z);
        }

        // Update results
        document.getElementById("result-z").textContent =
          "z: " + formatNumber(z, 6);
        document.getElementById("result-v").textContent =
          "Relativistic radial velocity v: " +
          formatNumber(v_km_s, 4) +
          " km/s";
        document.getElementById("result-beta").textContent =
          "v / c: " + formatNumber(beta, 6);

        if (isFinite(lambdaEmit_m)) {
          const leDisplay = metersToUnit(lambdaEmit_m, "nm");
          document.getElementById("result-lambda-rest").innerHTML =
            "λ<sub>emit</sub>: " + formatNumber(leDisplay, 4) + " nm";
        } else {
          document.getElementById("result-lambda-rest").innerHTML =
            "λ<sub>emit</sub>: –";
        }

        if (isFinite(lambdaObs_m)) {
          const loDisplay = metersToUnit(lambdaObs_m, "nm");
          document.getElementById("result-lambda-obs").innerHTML =
            "λ<sub>obs</sub>: " + formatNumber(loDisplay, 4) + " nm";
        } else {
          document.getElementById("result-lambda-obs").innerHTML =
            "λ<sub>obs</sub>: –";
        }

        if (isFinite(d_Mpc)) {
          document.getElementById("result-distance").textContent =
            "Approx. distance (Hubble’s law): " +
            formatNumber(d_Mpc, 4) +
            " Mpc  ≈ " +
            formatNumber(d_ly, 4) +
            " ly  ≈ " +
            formatNumber(d_Mly, 4) +
            " million ly";
        } else {
          document.getElementById("result-distance").textContent =
            "Approx. distance (Hubble’s law): –";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateModeVisibility();
        document
          .getElementById("mode")
          .addEventListener("change", updateModeVisibility);
        document
          .getElementById("calc-btn")
          .addEventListener("click", calculate);
        document
          .getElementById("reset-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            resetCalculator();
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
