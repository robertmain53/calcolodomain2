    <script>
      // Mobile menu toggle
      document.getElementById('mobile-menu-toggle')?.addEventListener('click', function () {
        const menu = document.getElementById('mobile-menu');
        if (!menu) return;
        const isHidden = menu.classList.contains('hidden');
        menu.classList.toggle('hidden', !isHidden);
        this.setAttribute('aria-expanded', String(isHidden));
      });

      document.addEventListener('DOMContentLoaded', function () {
        const baseInput = document.getElementById('base-font-size');
        const remInput = document.getElementById('rem-input');
        const pxInput = document.getElementById('px-input');
        const roundingSelect = document.getElementById('rounding-select');
        const cssSnippet = document.getElementById('css-snippet');
        const swapBtn = document.getElementById('swap-direction');
        const clearBtn = document.getElementById('clear-rem-px');
        const basePresetButtons = document.querySelectorAll('.base-preset');
        const tableBody = document.getElementById('rem-table-body');

        let updating = false;

        function getBase() {
          if (!baseInput) return 16;
          const raw = baseInput.value;
          const num = Number(raw);
          if (!isFinite(num) || num <= 0) return 16;
          return num;
        }

        function getDecimals() {
          if (!roundingSelect) return 3;
          const raw = roundingSelect.value;
          const dec = Number(raw);
          if (!Number.isInteger(dec) || dec < 0 || dec > 6) return 3;
          return dec;
        }

        function formatNumber(value) {
          if (!isFinite(value)) return '';
          const decimals = getDecimals();
          return Number(value.toFixed(decimals)).toString();
        }

        function updateFromRem() {
          if (updating) return;
          updating = true;
          const base = getBase();
          const raw = remInput ? remInput.value : '';
          if (raw === '' || isNaN(Number(raw))) {
            if (pxInput) pxInput.value = '';
            updateSnippet();
            updating = false;
            return;
          }
          const remVal = Number(raw);
          const pxVal = remVal * base;
          if (pxInput) pxInput.value = formatNumber(pxVal);
          updateSnippet();
          updating = false;
        }

        function updateFromPx() {
          if (updating) return;
          updating = true;
          const base = getBase();
          const raw = pxInput ? pxInput.value : '';
          if (raw === '' || isNaN(Number(raw))) {
            if (remInput) remInput.value = '';
            updateSnippet();
            updating = false;
            return;
          }
          const pxVal = Number(raw);
          const remVal = base === 0 ? 0 : pxVal / base;
          if (remInput) remInput.value = formatNumber(remVal);
          updateSnippet();
          updating = false;
        }

        function updateSnippet() {
          if (!cssSnippet) return;
          const base = getBase();
          const remVal = remInput && remInput.value !== '' && !isNaN(Number(remInput.value))
            ? Number(remInput.value)
            : null;
          const pxVal = pxInput && pxInput.value !== '' && !isNaN(Number(pxInput.value))
            ? Number(pxInput.value)
            : null;

          let lines = [];
          lines.push('/* Root font-size and equivalent relationships */');
          lines.push('html {');
          lines.push('  font-size: ' + formatNumber(base) + 'px;');
          lines.push('  /* 1rem = ' + formatNumber(base) + 'px */');
          lines.push('}');
          if (remVal !== null) {
            lines.push('');
            lines.push('/* Example using rem */');
            lines.push('.element {');
            lines.push('  font-size: ' + formatNumber(remVal) + 'rem;');
            if (pxVal !== null) {
              lines.push('  /* ≈ ' + formatNumber(pxVal) + 'px */');
            }
            lines.push('}');
          } else if (pxVal !== null) {
            const remFromPx = base === 0 ? 0 : pxVal / base;
            lines.push('');
            lines.push('/* Example converted from px */');
            lines.push('.element {');
            lines.push('  font-size: ' + formatNumber(remFromPx) + 'rem;');
            lines.push('  /* ' + formatNumber(pxVal) + 'px at base ' + formatNumber(base) + 'px */');
            lines.push('}');
          }
          cssSnippet.value = lines.join('\n');
        }

        function rebuildRemTable() {
          if (!tableBody) return;
          const base = getBase();
          const rowsConfig = [
            { rem: 0.25, label: 'Fine labels, captions' },
            { rem: 0.5, label: 'Badges or small UI' },
            { rem: 0.75, label: 'Secondary text' },
            { rem: 1, label: 'Body text baseline' },
            { rem: 1.25, label: 'Subheadings' },
            { rem: 1.5, label: 'Section titles' },
            { rem: 2, label: 'Main headings' },
            { rem: 3, label: 'Hero titles' }
          ];
          tableBody.innerHTML = '';
          rowsConfig.forEach(function (row, idx) {
            const pxVal = row.rem * base;
            const tr = document.createElement('tr');
            tr.className = (idx % 2 === 0) ? 'bg-white' : 'bg-gray-50';
            tr.innerHTML =
              '<td class="px-3 py-2 border-b">' + formatNumber(row.rem) + ' rem</td>' +
              '<td class="px-3 py-2 border-b">' + formatNumber(pxVal) + ' px</td>' +
              '<td class="px-3 py-2 border-b text-gray-600 text-xs">' + row.label + '</td>';
            tableBody.appendChild(tr);
          });
        }

        // Listeners
        if (baseInput) {
          baseInput.addEventListener('input', function () {
            rebuildRemTable();
            updateSnippet();
            // Recompute from current rem/px values
            if (remInput && remInput.value !== '') {
              updateFromRem();
            } else if (pxInput && pxInput.value !== '') {
              updateFromPx();
            }
          });
        }
        if (roundingSelect) {
          roundingSelect.addEventListener('change', function () {
            // Recalculate with new rounding
            if (remInput && remInput.value !== '') {
              updateFromRem();
            } else if (pxInput && pxInput.value !== '') {
              updateFromPx();
            }
            rebuildRemTable();
          });
        }
        if (remInput) remInput.addEventListener('input', updateFromRem);
        if (pxInput) pxInput.addEventListener('input', updateFromPx);

        if (swapBtn && remInput && pxInput) {
          swapBtn.addEventListener('click', function () {
            const remVal = remInput.value;
            const pxVal = pxInput.value;
            remInput.value = pxVal;
            pxInput.value = remVal;
            // Try to interpret swapped values sensibly: prefer updating from rem
            if (remInput.value !== '') {
              updateFromRem();
            } else if (pxInput.value !== '') {
              updateFromPx();
            }
          });
        }

        if (clearBtn && remInput && pxInput && cssSnippet) {
          clearBtn.addEventListener('click', function () {
            remInput.value = '';
            pxInput.value = '';
            cssSnippet.value = '';
          });
        }

        basePresetButtons.forEach(function (btn) {
          btn.addEventListener('click', function () {
            const base = this.getAttribute('data-base');
            if (!baseInput || !base) return;
            baseInput.value = base;
            rebuildRemTable();
            if (remInput && remInput.value !== '') {
              updateFromRem();
            } else if (pxInput && pxInput.value !== '') {
              updateFromPx();
            } else {
              updateSnippet();
            }
          });
        });

        // Initial table and snippet
        rebuildRemTable();
        updateSnippet();
      });
    </script>

