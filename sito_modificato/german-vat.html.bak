    <script>
      // Tab handling
      const tabs = [
        { btn: "tab-net-to-gross", panel: "panel-net-to-gross" },
        { btn: "tab-gross-to-net", panel: "panel-gross-to-net" },
        { btn: "tab-mixed", panel: "panel-mixed" },
      ];
      tabs.forEach((t) => {
        document.getElementById(t.btn).addEventListener("click", () => {
          tabs.forEach((x) => {
            const btn = document.getElementById(x.btn);
            const panel = document.getElementById(x.panel);
            if (x.btn === t.btn) {
              btn.classList.add("tab-active");
              btn.setAttribute("aria-selected", "true");
              panel.classList.remove("hidden");
            } else {
              btn.classList.remove("tab-active");
              btn.setAttribute("aria-selected", "false");
              panel.classList.add("hidden");
            }
          });
        });
      });

      function parseRate(selectEl, customWrapperId, customInputId) {
        const val = selectEl.value;
        if (val === "custom") {
          const custom = parseFloat(
            document.getElementById(customInputId).value.replace(",", ".")
          );
          return isFinite(custom) && custom >= 0 ? custom : null;
        }
        return parseFloat(val);
      }

      function formatEUR(value) {
        if (!isFinite(value)) return "€0.00";
        return "€" + value.toFixed(2);
      }

      // Show/hide custom rate fields
      function setupRateSelect(selectId, wrapperId) {
        const sel = document.getElementById(selectId);
        const wrap = document.getElementById(wrapperId);
        sel.addEventListener("change", () => {
          if (sel.value === "custom") {
            wrap.classList.remove("hidden");
          } else {
            wrap.classList.add("hidden");
          }
        });
      }
      setupRateSelect("ntg-rate", "ntg-custom-wrapper");
      setupRateSelect("gtn-rate", "gtn-custom-wrapper");

      // Net -> Gross
      document.getElementById("ntg-calc").addEventListener("click", () => {
        const netInput = document.getElementById("ntg-net");
        const rateSelect = document.getElementById("ntg-rate");
        const net = parseFloat(netInput.value.replace(",", "."));
        const rate = parseRate(rateSelect, "ntg-custom-wrapper", "ntg-custom");

        netInput.classList.remove("input-error");

        if (!isFinite(net) || net < 0) {
          netInput.classList.add("input-error");
          return;
        }
        if (rate === null || rate < 0) {
          alert("Please enter a valid VAT rate.");
          return;
        }

        const r = rate / 100;
        const vat = net * r;
        const gross = net + vat;

        document.getElementById("ntg-net-out").textContent = formatEUR(net);
        document.getElementById("ntg-vat-out").textContent = formatEUR(vat);
        document.getElementById("ntg-gross-out").textContent = formatEUR(gross);
        document.getElementById("ntg-rate-label").textContent = `at ${rate
          .toFixed(2)
          .replace(/\.00$/, "")}%`;
        document.getElementById("ntg-result").classList.remove("hidden");
      });

      document.getElementById("ntg-clear").addEventListener("click", () => {
        document.getElementById("ntg-net").value = "";
        document.getElementById("ntg-result").classList.add("hidden");
      });

      // Gross -> Net
      document.getElementById("gtn-calc").addEventListener("click", () => {
        const grossInput = document.getElementById("gtn-gross");
        const rateSelect = document.getElementById("gtn-rate");
        const gross = parseFloat(grossInput.value.replace(",", "."));
        const rate = parseRate(rateSelect, "gtn-custom-wrapper", "gtn-custom");

        grossInput.classList.remove("input-error");

        if (!isFinite(gross) || gross < 0) {
          grossInput.classList.add("input-error");
          return;
        }
        if (rate === null || rate < 0) {
          alert("Please enter a valid VAT rate.");
          return;
        }

        const r = rate / 100;
        const net = gross / (1 + r);
        const vat = gross - net;

        document.getElementById("gtn-gross-out").textContent = formatEUR(gross);
        document.getElementById("gtn-vat-out").textContent = formatEUR(vat);
        document.getElementById("gtn-net-out").textContent = formatEUR(net);
        document.getElementById("gtn-rate-label").textContent = `at ${rate
          .toFixed(2)
          .replace(/\.00$/, "")}%`;
        document.getElementById("gtn-result").classList.remove("hidden");
      });

      document.getElementById("gtn-clear").addEventListener("click", () => {
        document.getElementById("gtn-gross").value = "";
        document.getElementById("gtn-result").classList.add("hidden");
      });

      // Mixed VAT items
      const mixedBody = document.getElementById("mixed-body");
      let mixedRowId = 0;

      function createMixedRow() {
        mixedRowId++;
        const tr = document.createElement("tr");
        tr.dataset.rowId = mixedRowId;
        tr.innerHTML = `
      <td class="px-2 py-1 border-t">
        <input type="text" class="w-full border border-gray-200 rounded px-2 py-1 text-xs" placeholder="Item ${mixedRowId}">
      </td>
      <td class="px-2 py-1 border-t text-right">
        <input type="number" step="0.01" min="0" class="w-24 border border-gray-200 rounded px-2 py-1 text-right text-xs mixed-net">
      </td>
      <td class="px-2 py-1 border-t text-center">
        <select class="border border-gray-200 rounded px-1 py-1 text-xs mixed-rate">
          <option value="19">19%</option>
          <option value="7">7%</option>
          <option value="0">0%</option>
        </select>
      </td>
      <td class="px-2 py-1 border-t text-right">
        <span class="mixed-vat text-xs">€0.00</span>
      </td>
      <td class="px-2 py-1 border-t text-right">
        <span class="mixed-gross text-xs">€0.00</span>
      </td>
      <td class="px-2 py-1 border-t text-center">
        <button type="button" class="text-xs text-red-600 hover:underline mixed-remove">X</button>
      </td>
    `;
        mixedBody.appendChild(tr);
      }

      function recalcMixed() {
        const rows = mixedBody.querySelectorAll("tr");
        let netTotal = 0,
          vatTotal = 0,
          grossTotal = 0;
        const byRate = {};

        rows.forEach((row) => {
          const netInput = row.querySelector(".mixed-net");
          const rateSelect = row.querySelector(".mixed-rate");
          const vatSpan = row.querySelector(".mixed-vat");
          const grossSpan = row.querySelector(".mixed-gross");

          const net = parseFloat((netInput.value || "").replace(",", "."));
          const rate = parseFloat(rateSelect.value);

          if (!isFinite(net) || net <= 0) {
            vatSpan.textContent = "€0.00";
            grossSpan.textContent = "€0.00";
            return;
          }

          const r = rate / 100;
          const vat = net * r;
          const gross = net + vat;

          vatSpan.textContent = formatEUR(vat);
          grossSpan.textContent = formatEUR(gross);

          netTotal += net;
          vatTotal += vat;
          grossTotal += gross;

          const key = rate.toFixed(2);
          if (!byRate[key]) {
            byRate[key] = { net: 0, vat: 0, gross: 0 };
          }
          byRate[key].net += net;
          byRate[key].vat += vat;
          byRate[key].gross += gross;
        });

        const summary = document.getElementById("mixed-summary");
        if (netTotal === 0 && vatTotal === 0 && grossTotal === 0) {
          summary.classList.add("hidden");
          return;
        }

        const list = document.getElementById("mixed-by-rate");
        list.innerHTML = "";
        Object.keys(byRate)
          .sort((a, b) => parseFloat(a) - parseFloat(b))
          .forEach((rateKey) => {
            const data = byRate[rateKey];
            const li = document.createElement("li");
            li.textContent = `${rateKey.replace(/\.00$/, "")}%: Net ${formatEUR(
              data.net
            )}, VAT ${formatEUR(data.vat)}, Gross ${formatEUR(data.gross)}`;
            list.appendChild(li);
          });

        document.getElementById("mixed-net-total").textContent =
          formatEUR(netTotal);
        document.getElementById("mixed-vat-total").textContent =
          formatEUR(vatTotal);
        document.getElementById("mixed-gross-total").textContent =
          formatEUR(grossTotal);
        summary.classList.remove("hidden");
      }

      document.getElementById("mixed-add-row").addEventListener("click", () => {
        createMixedRow();
      });

      document.getElementById("mixed-clear").addEventListener("click", () => {
        mixedBody.innerHTML = "";
        document.getElementById("mixed-summary").classList.add("hidden");
        mixedRowId = 0;
        createMixedRow();
      });

      mixedBody.addEventListener("input", (e) => {
        if (
          e.target.classList.contains("mixed-net") ||
          e.target.classList.contains("mixed-rate")
        ) {
          recalcMixed();
        }
      });

      mixedBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("mixed-remove")) {
          const row = e.target.closest("tr");
          row.remove();
          recalcMixed();
        }
      });

      // Initialize with one row
      createMixedRow();
    </script>

