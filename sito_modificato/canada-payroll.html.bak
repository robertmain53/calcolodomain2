      function calculatePayroll() {
        const province = document.getElementById("province").value;
        const year = document.getElementById("year").value;
        const freq = parseFloat(document.getElementById("pay-frequency").value);
        const incomeType = document.getElementById("income-type").value;
        const hours =
          parseFloat(document.getElementById("hours-per-period").value) || 0;
        const hourlyRate =
          parseFloat(document.getElementById("hourly-rate").value) || 0;
        const salaryPerPeriod =
          parseFloat(document.getElementById("salary-per-period").value) || 0;
        const bonusAmount =
          parseFloat(document.getElementById("bonus-amount").value) || 0;
        const ytdIncome =
          parseFloat(document.getElementById("ytd-income").value) || 0;
        const basicClaim =
          document.getElementById("basic-claim").value === "yes";
        const additionalCredits =
          parseFloat(document.getElementById("additional-credits").value) || 0;
        const eiExempt = document.getElementById("ei-exempt").value;

        const data = TAX_DATA[year];
        if (!data) return;

        let grossPerPeriod = 0;
        let annualGross = 0;

        if (incomeType === "hourly") {
          grossPerPeriod = hourlyRate * hours;
          annualGross = grossPerPeriod * freq;
        } else if (incomeType === "salary") {
          grossPerPeriod = salaryPerPeriod;
          annualGross = grossPerPeriod * freq;
        } else {
          // bonus/commission: treat as one-time; annual = bonus
          grossPerPeriod = bonusAmount;
          annualGross = bonusAmount;
        }

        // CPP/QPP
        const isQuebec = province === "QC";
        const cppCfg = isQuebec ? data.QPP : data.CPP;
        let pensionableAnnual = Math.max(
          0,
          Math.min(annualGross + ytdIncome, cppCfg.maxPensionable) -
            cppCfg.basicExemption
        );
        let totalPensionableThisYear = Math.max(
          0,
          Math.min(annualGross + ytdIncome, cppCfg.maxPensionable) -
            cppCfg.basicExemption
        );
        let remainingPensionable = Math.max(
          0,
          totalPensionableThisYear -
            Math.max(
              0,
              Math.min(ytdIncome, cppCfg.maxPensionable) - cppCfg.basicExemption
            )
        );
        let cppAnnual = remainingPensionable * cppCfg.rate;
        cppAnnual = Math.min(cppAnnual, cppCfg.maxContribution);
        let cppPerPeriod =
          incomeType === "bonus" ? cppAnnual : cppAnnual / freq;

        // EI
        const eiCfg = data.EI;
        let totalInsurableThisYear = Math.min(
          annualGross + ytdIncome,
          eiCfg.maxInsurable
        );
        let remainingInsurable = Math.max(
          0,
          totalInsurableThisYear - Math.min(ytdIncome, eiCfg.maxInsurable)
        );
        let eiAnnual = remainingInsurable * eiCfg.rate;
        eiAnnual = Math.min(eiAnnual, eiCfg.maxContribution);
        let eiPerPeriod = incomeType === "bonus" ? eiAnnual : eiAnnual / freq;

        if (eiExempt === "noCPP" || eiExempt === "noBoth") {
          cppAnnual = 0;
          cppPerPeriod = 0;
        }
        if (eiExempt === "noEI" || eiExempt === "noBoth") {
          eiAnnual = 0;
          eiPerPeriod = 0;
        }

        // Taxable income (simplified)
        const taxableIncome = Math.max(0, annualGross - cppAnnual - eiAnnual);

        // Federal tax
        const fedCfg = data.federal;
        let fedTaxGross = calcProgressiveTax(taxableIncome, fedCfg.brackets);
        let fedCreditsBase = basicClaim ? fedCfg.basicPersonal : 0;
        let fedCredits = (fedCreditsBase + additionalCredits) * 0.15;
        let fedTaxAnnual = Math.max(0, fedTaxGross - fedCredits);
        let fedTaxPerPeriod =
          incomeType === "bonus" ? fedTaxAnnual : fedTaxAnnual / freq;

        // Provincial tax
        const provCfg = data.provinces[province];
        let provTaxGross = calcProgressiveTax(taxableIncome, provCfg.brackets);
        let provCreditsBase = basicClaim ? provCfg.basicPersonal : 0;
        let lowestProvRate = provCfg.brackets[0].rate;
        let provCredits =
          (provCreditsBase + additionalCredits) * lowestProvRate;
        let provTaxAnnual = Math.max(0, provTaxGross - provCredits);
        let provTaxPerPeriod =
          incomeType === "bonus" ? provTaxAnnual : provTaxAnnual / freq;

        const totalDeductionsAnnual =
          cppAnnual + eiAnnual + fedTaxAnnual + provTaxAnnual;
        const totalDeductionsPerPeriod =
          incomeType === "bonus"
            ? totalDeductionsAnnual
            : cppPerPeriod + eiPerPeriod + fedTaxPerPeriod + provTaxPerPeriod;

        const netPerPeriod = grossPerPeriod - totalDeductionsPerPeriod;
        const netAnnual = annualGross - totalDeductionsAnnual;

        // Update UI
        document.getElementById("gross-pay-period").textContent =
          formatCurrency(grossPerPeriod);
        document.getElementById("net-pay-period").textContent =
          formatCurrency(netPerPeriod);
        document.getElementById("deductions-period").textContent =
          formatCurrency(totalDeductionsPerPeriod);
        document.getElementById("gross-annual").textContent =
          formatCurrency(annualGross);
        document.getElementById("net-annual").textContent =
          formatCurrency(netAnnual);

        document.getElementById("cpp-period").textContent =
          formatCurrency(cppPerPeriod);
        document.getElementById("cpp-annual").textContent =
          formatCurrency(cppAnnual);
        document.getElementById("ei-period").textContent =
          formatCurrency(eiPerPeriod);
        document.getElementById("ei-annual").textContent =
          formatCurrency(eiAnnual);
        document.getElementById("fedtax-period").textContent =
          formatCurrency(fedTaxPerPeriod);
        document.getElementById("fedtax-annual").textContent =
          formatCurrency(fedTaxAnnual);
        document.getElementById("provtax-period").textContent =
          formatCurrency(provTaxPerPeriod);
        document.getElementById("provtax-annual").textContent =
          formatCurrency(provTaxAnnual);
        document.getElementById("totalded-period").textContent = formatCurrency(
          totalDeductionsPerPeriod
        );
        document.getElementById("totalded-annual").textContent = formatCurrency(
          totalDeductionsAnnual
        );
      }

      function updateIncomeTypeVisibility() {
        const incomeType = document.getElementById("income-type").value;
        const hoursWrapper = document.getElementById("hours-wrapper");
        const hourlyWrapper = document.getElementById("hourly-rate-wrapper");
        const salaryWrapper = document.getElementById("salary-wrapper");
        const bonusWrapper = document.getElementById("bonus-wrapper");

        if (incomeType === "hourly") {
          hoursWrapper.classList.remove("hidden");
          hourlyWrapper.classList.remove("hidden");
          salaryWrapper.classList.add("hidden");
          bonusWrapper.classList.add("hidden");
        } else if (incomeType === "salary") {
          hoursWrapper.classList.add("hidden");
          hourlyWrapper.classList.add("hidden");
          salaryWrapper.classList.remove("hidden");
          bonusWrapper.classList.add("hidden");
        } else {
          // bonus
          hoursWrapper.classList.add("hidden");
          hourlyWrapper.classList.add("hidden");
          salaryWrapper.classList.add("hidden");
          bonusWrapper.classList.remove("hidden");
        }
      }

      document.getElementById("income-type").addEventListener("change", () => {
        updateIncomeTypeVisibility();
        calculatePayroll();
      });

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculatePayroll);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("province").value = "ON";
        document.getElementById("year").value = "2025";
        document.getElementById("pay-frequency").value = "26";
        document.getElementById("income-type").value = "hourly";
        document.getElementById("hours-per-period").value = "40";
        document.getElementById("hourly-rate").value = "30";
        document.getElementById("salary-per-period").value = "2000";
        document.getElementById("bonus-amount").value = "5000";
        document.getElementById("ytd-income").value = "";
        document.getElementById("basic-claim").value = "yes";
        document.getElementById("additional-credits").value = "0";
        document.getElementById("ei-exempt").value = "none";
        updateIncomeTypeVisibility();
        calculatePayroll();
      });

      // Auto-calc on load
      document.addEventListener("DOMContentLoaded", () => {
        updateIncomeTypeVisibility();
        calculatePayroll();
      });

