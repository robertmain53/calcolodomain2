      function calcProgressiveTax(income, brackets) {
        let tax = 0;
        let prevLimit = 0;
        for (const b of brackets) {
          if (income <= prevLimit) break;
          const taxableAtThisRate = Math.min(income, b.upTo) - prevLimit;
          if (taxableAtThisRate > 0) {
            tax += taxableAtThisRate * b.rate;
          }
          prevLimit = b.upTo;
        }
        return tax;
      }

      function formatCurrency(value) {
        return "$" + (isNaN(value) ? "0.00" : value.toFixed(2));
