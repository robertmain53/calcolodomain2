    <script>
      // Basic time zone list (subset for usability). Uses IANA names.
      const TIMEZONES = [
        "UTC",
        "Europe/London",
        "Europe/Berlin",
        "Europe/Paris",
        "Europe/Madrid",
        "Europe/Rome",
        "Europe/Warsaw",
        "Europe/Moscow",
        "Africa/Johannesburg",
        "Asia/Dubai",
        "Asia/Kolkata",
        "Asia/Singapore",
        "Asia/Tokyo",
        "Asia/Shanghai",
        "Australia/Sydney",
        "Pacific/Auckland",
        "America/St_Johns",
        "America/Halifax",
        "America/New_York",
        "America/Chicago",
        "America/Denver",
        "America/Los_Angeles",
        "America/Vancouver",
        "America/Sao_Paulo",
      ];

      // --- Tab handling ---
      const tabs = {
        timezone: {
          btn: document.getElementById("tab-timezone"),
          panel: document.getElementById("panel-timezone"),
        },
        setup: {
          btn: document.getElementById("tab-setup"),
          panel: document.getElementById("panel-setup"),
        },
        cost: {
          btn: document.getElementById("tab-cost"),
          panel: document.getElementById("panel-cost"),
        },
      };

      function activateTab(key) {
        Object.entries(tabs).forEach(([k, { btn, panel }]) => {
          const active = k === key;
          btn.classList.toggle("border-blue-600", active);
          btn.classList.toggle("text-blue-600", active);
          btn.classList.toggle("border-transparent", !active);
          btn.classList.toggle("text-gray-600", !active);
          panel.classList.toggle("hidden", !active);
        });
      }

      tabs.timezone.btn.addEventListener("click", () =>
        activateTab("timezone")
      );
      tabs.setup.btn.addEventListener("click", () => activateTab("setup"));
      tabs.cost.btn.addEventListener("click", () => activateTab("cost"));

      // --- Time zone helper ---
      const organizerTzSelect = document.getElementById("organizer-tz");
      const participantsBody = document.getElementById("participants-body");
      const meetingDateInput = document.getElementById("meeting-date");
      const meetingTimeInput = document.getElementById("meeting-time");
      const suggestEarlierBtn = document.getElementById("suggest-earlier");
      const suggestLaterBtn = document.getElementById("suggest-later");
      const addParticipantBtn = document.getElementById("add-participant");

      function populateTimezones(select) {
        select.innerHTML = "";
        TIMEZONES.forEach((tz) => {
          const opt = document.createElement("option");
          opt.value = tz;
          opt.textContent = tz;
          select.appendChild(opt);
        });
      }

      populateTimezones(organizerTzSelect);

      // Try to detect browser time zone
      try {
        const browserTz = Intl.DateTimeFormat().resolvedOptions().timeZone;
        if (TIMEZONES.includes(browserTz)) {
          organizerTzSelect.value = browserTz;
        }
      } catch (e) {}

      // Default date/time
      const now = new Date();
      meetingDateInput.valueAsNumber = now.setHours(0, 0, 0, 0);
      meetingTimeInput.value = "09:00";

      function addParticipantRow(name = "") {
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";
        tr.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border border-gray-300 rounded-md px-2 py-1 text-xs participant-name" placeholder="Name" value="${name}">
      </td>
      <td class="px-3 py-2">
        <select class="w-full border border-gray-300 rounded-md px-2 py-1 text-xs participant-tz"></select>
      </td>
      <td class="px-3 py-2">
        <span class="text-xs participant-local-time text-gray-800">–</span>
      </td>
      <td class="px-3 py-2">
        <span class="text-xs participant-fit badge bg-gray-100 text-gray-700">Unknown</span>
      </td>
      <td class="px-3 py-2 text-right">
        <button type="button" class="text-xs text-red-600 hover:underline remove-participant">Remove</button>
      </td>
    `;
        participantsBody.appendChild(tr);
        const tzSelect = tr.querySelector(".participant-tz");
        populateTimezones(tzSelect);
        tzSelect.value = organizerTzSelect.value;
        tr.querySelector(".remove-participant").addEventListener(
          "click",
          () => {
            tr.remove();
            updateLocalTimes();
          }
        );
        tzSelect.addEventListener("change", updateLocalTimes);
        tr.querySelector(".participant-name").addEventListener(
          "input",
          syncNamesToCostTab
        );
        return tr;
      }

      addParticipantBtn.addEventListener("click", () => {
        addParticipantRow();
        updateLocalTimes();
      });

      organizerTzSelect.addEventListener("change", updateLocalTimes);
      meetingDateInput.addEventListener("change", updateLocalTimes);
      meetingTimeInput.addEventListener("change", updateLocalTimes);

      function getBaseDate() {
        const dateStr = meetingDateInput.value;
        const timeStr = meetingTimeInput.value || "09:00";
        if (!dateStr) return null;
        const [y, m, d] = dateStr.split("-").map(Number);
        const [hh, mm] = timeStr.split(":").map(Number);
        // Interpret as local time in organizer TZ by constructing a Date in that TZ via offset trick
        // We approximate by using local time and then adjusting using Intl.
        const local = new Date(y, m - 1, d, hh, mm, 0, 0);
        return local;
      }

      function formatInTz(date, tz) {
        return new Intl.DateTimeFormat("en-GB", {
          hour: "2-digit",
          minute: "2-digit",
          hour12: false,
          timeZone: tz,
        }).format(date);
      }

      function getHourInTz(date, tz) {
        const parts = new Intl.DateTimeFormat("en-GB", {
          hour: "2-digit",
          hour12: false,
          timeZone: tz,
        }).formatToParts(date);
        const hourPart = parts.find((p) => p.type === "hour");
        return hourPart ? parseInt(hourPart.value, 10) : null;
      }

      function classifyWorkHour(hour) {
        if (hour === null || isNaN(hour))
          return { label: "Unknown", color: "bg-gray-100 text-gray-700" };
        if (hour >= 9 && hour < 17)
          return {
            label: "Within hours",
            color: "bg-green-100 text-green-800",
          };
        if ((hour >= 7 && hour < 9) || (hour >= 17 && hour < 19))
          return {
            label: "Borderline",
            color: "bg-yellow-100 text-yellow-800",
          };
        return { label: "Outside hours", color: "bg-red-100 text-red-800" };
      }

      function updateLocalTimes() {
        const baseDate = getBaseDate();
        if (!baseDate) return;
        const rows = participantsBody.querySelectorAll("tr");
        rows.forEach((tr) => {
          const tz = tr.querySelector(".participant-tz").value;
          const localSpan = tr.querySelector(".participant-local-time");
          const fitSpan = tr.querySelector(".participant-fit");
          try {
            const timeStr = formatInTz(baseDate, tz);
            localSpan.textContent = timeStr;
            const hour = getHourInTz(baseDate, tz);
            const fit = classifyWorkHour(hour);
            fitSpan.textContent = fit.label;
            fitSpan.className = `text-xs participant-fit badge ${fit.color}`;
          } catch (e) {
            localSpan.textContent = "–";
            fitSpan.textContent = "Unknown";
            fitSpan.className =
              "text-xs participant-fit badge bg-gray-100 text-gray-700";
          }
        });
      }

      suggestEarlierBtn.addEventListener("click", () => shiftMeetingTime(-30));
      suggestLaterBtn.addEventListener("click", () => shiftMeetingTime(30));

      function shiftMeetingTime(deltaMinutes) {
        const baseDate = getBaseDate();
        if (!baseDate) return;
        baseDate.setMinutes(baseDate.getMinutes() + deltaMinutes);
        meetingDateInput.valueAsNumber = new Date(
          baseDate.getFullYear(),
          baseDate.getMonth(),
          baseDate.getDate()
        ).setHours(0, 0, 0, 0);
        const hh = String(baseDate.getHours()).padStart(2, "0");
        const mm = String(baseDate.getMinutes()).padStart(2, "0");
        meetingTimeInput.value = `${hh}:${mm}`;
        updateLocalTimes();
      }

      // --- Meeting setup & cost participants ---
      const costParticipantsBody = document.getElementById(
        "cost-participants-body"
      );
      const workingHoursYearInput =
        document.getElementById("working-hours-year");
      const durationMinutesInput = document.getElementById("duration-minutes");
      const currencySelect = document.getElementById("currency");
      const copyFromTimezoneBtn = document.getElementById("copy-from-timezone");

      function addCostParticipantRow(name = "") {
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";
        tr.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border border-gray-300 rounded-md px-2 py-1 text-xs cost-name" placeholder="Name" value="${name}">
      </td>
      <td class="px-3 py-2">
        <select class="w-full border border-gray-300 rounded-md px-2 py-1 text-xs cost-type">
          <option value="annual" selected>Annual salary</option>
          <option value="hourly">Hourly rate</option>
          <option value="day">Day rate</option>
        </select>
      </td>
      <td class="px-3 py-2">
        <input type="number" class="w-full border border-gray-300 rounded-md px-2 py-1 text-xs cost-amount" min="0" step="0.01" placeholder="0.00">
      </td>
      <td class="px-3 py-2">
        <span class="text-xs cost-hourly">–</span>
      </td>
      <td class="px-3 py-2 text-right">
        <button type="button" class="text-xs text-red-600 hover:underline remove-cost-participant">Remove</button>
      </td>
    `;
        costParticipantsBody.appendChild(tr);
        tr.querySelector(".remove-cost-participant").addEventListener(
          "click",
          () => {
            tr.remove();
            updateCosts();
          }
        );
        tr.querySelector(".cost-type").addEventListener("change", () => {
          updateHourlyForRow(tr);
          updateCosts();
        });
        tr.querySelector(".cost-amount").addEventListener("input", () => {
          updateHourlyForRow(tr);
          updateCosts();
        });
        tr.querySelector(".cost-name").addEventListener("input", updateCosts);
        return tr;
      }

      function syncNamesToCostTab() {
        // No-op here; we provide explicit copy button instead of live sync to avoid overwriting.
      }

      copyFromTimezoneBtn.addEventListener("click", () => {
        costParticipantsBody.innerHTML = "";
        const names = Array.from(
          participantsBody.querySelectorAll(".participant-name")
        )
          .map((input) => input.value.trim())
          .filter((v) => v.length > 0);
        if (names.length === 0) {
          addCostParticipantRow("");
        } else {
          names.forEach((n) => addCostParticipantRow(n));
        }
        updateCosts();
      });

      workingHoursYearInput.addEventListener("input", () => {
        Array.from(costParticipantsBody.querySelectorAll("tr")).forEach(
          updateHourlyForRow
        );
        updateCosts();
      });
      durationMinutesInput.addEventListener("input", updateCosts);
      currencySelect.addEventListener("change", updateCosts);

      function updateHourlyForRow(tr) {
        const type = tr.querySelector(".cost-type").value;
        const amount = parseFloat(tr.querySelector(".cost-amount").value);
        const hourlySpan = tr.querySelector(".cost-hourly");
        if (!amount || amount <= 0) {
          hourlySpan.textContent = "–";
          hourlySpan.dataset.hourly = "0";
          return;
        }
        const hoursYear = parseFloat(workingHoursYearInput.value) || 2000;
        let hourly = 0;
        if (type === "annual") {
          hourly = amount / hoursYear;
        } else if (type === "hourly") {
          hourly = amount;
        } else if (type === "day") {
          hourly = amount / 8;
        }
        hourlySpan.dataset.hourly = hourly.toString();
        hourlySpan.textContent = formatCurrency(hourly, true);
      }

      function formatCurrency(value, perHour = false) {
        if (!isFinite(value)) return "–";
        const currency = currencySelect.value || "USD";
        try {
          const formatted = new Intl.NumberFormat("en-US", {
            style: "currency",
            currency,
            maximumFractionDigits: 2,
          }).format(value);
          return perHour ? `${formatted}/h` : formatted;
        } catch (e) {
          const rounded = value.toFixed(2);
          return perHour
            ? `${currency} ${rounded}/h`
            : `${currency} ${rounded}`;
        }
      }

      // --- Cost & live ticker ---
      const estimatedCostEl = document.getElementById("estimated-cost");
      const liveCostEl = document.getElementById("live-cost");
      const avgCostEl = document.getElementById("avg-cost");
      const breakdownBody = document.getElementById("breakdown-body");
      const startTickerBtn = document.getElementById("start-ticker");
      const pauseTickerBtn = document.getElementById("pause-ticker");
      const resetTickerBtn = document.getElementById("reset-ticker");
      const tickerStatusEl = document.getElementById("ticker-status");
      const exportJsonBtn = document.getElementById("export-json");
      const copySummaryBtn = document.getElementById("copy-summary");

      let tickerInterval = null;
      let tickerStartTime = null;
      let tickerAccumulatedSeconds = 0;

      function getParticipantsHourly() {
        const rows = Array.from(costParticipantsBody.querySelectorAll("tr"));
        return rows
          .map((tr) => {
            const name =
              tr.querySelector(".cost-name").value.trim() || "Participant";
            const hourlySpan = tr.querySelector(".cost-hourly");
            const hourly = parseFloat(hourlySpan.dataset.hourly || "0");
            return { name, hourly };
          })
          .filter((p) => p.hourly > 0);
      }

      function updateCosts() {
        const durationMin = parseFloat(durationMinutesInput.value) || 0;
        const participants = getParticipantsHourly();
        const durationHours = durationMin / 60;
        let total = 0;
        breakdownBody.innerHTML = "";
        participants.forEach((p) => {
          const cost = p.hourly * durationHours;
          total += cost;
          const tr = document.createElement("tr");
          tr.className = "border-t border-gray-100";
          tr.innerHTML = `
        <td class="px-3 py-2 text-xs">${p.name}</td>
        <td class="px-3 py-2 text-xs">${formatCurrency(p.hourly, true)}</td>
        <td class="px-3 py-2 text-xs">${formatCurrency(cost, false)}</td>
      `;
          breakdownBody.appendChild(tr);
        });
        estimatedCostEl.textContent =
          total > 0 ? formatCurrency(total, false) : "–";
        const avg = participants.length > 0 ? total / participants.length : 0;
        avgCostEl.textContent = total > 0 ? formatCurrency(avg, false) : "–";
        // Update live cost if ticker is running
        if (tickerInterval !== null) {
          updateLiveCostDisplay();
        }
      }

      function getElapsedSeconds() {
        if (!tickerStartTime) return tickerAccumulatedSeconds;
        const now = Date.now();
        return tickerAccumulatedSeconds + (now - tickerStartTime) / 1000;
      }

      function updateLiveCostDisplay() {
        const elapsed = getElapsedSeconds();
        const participants = getParticipantsHourly();
        const totalHourly = participants.reduce((sum, p) => sum + p.hourly, 0);
        const cost = totalHourly * (elapsed / 3600);
        liveCostEl.textContent =
          totalHourly > 0 && elapsed > 0 ? formatCurrency(cost, false) : "–";
      }

      startTickerBtn.addEventListener("click", () => {
        if (tickerInterval !== null) return;
        tickerStartTime = Date.now();
        tickerInterval = setInterval(updateLiveCostDisplay, 500);
        startTickerBtn.disabled = true;
        pauseTickerBtn.disabled = false;
        resetTickerBtn.disabled = false;
        tickerStatusEl.textContent = "Running…";
      });

      pauseTickerBtn.addEventListener("click", () => {
        if (tickerInterval === null) return;
        tickerAccumulatedSeconds = getElapsedSeconds();
        clearInterval(tickerInterval);
        tickerInterval = null;
        tickerStartTime = null;
        startTickerBtn.disabled = false;
        pauseTickerBtn.disabled = true;
        tickerStatusEl.textContent = "Paused";
      });

      resetTickerBtn.addEventListener("click", () => {
        if (tickerInterval !== null) {
          clearInterval(tickerInterval);
          tickerInterval = null;
        }
        tickerStartTime = null;
        tickerAccumulatedSeconds = 0;
        liveCostEl.textContent = "–";
        startTickerBtn.disabled = false;
        pauseTickerBtn.disabled = true;
        resetTickerBtn.disabled = true;
        tickerStatusEl.textContent = "Not running";
      });

      exportJsonBtn.addEventListener("click", () => {
        const data = {
          meeting: {
            date: meetingDateInput.value,
            time: meetingTimeInput.value,
            organizerTimeZone: organizerTzSelect.value,
            durationMinutes: parseFloat(durationMinutesInput.value) || 0,
            workingHoursPerYear:
              parseFloat(workingHoursYearInput.value) || 2000,
            currency: currencySelect.value,
          },
          participants: getParticipantsHourly().map((p) => p),
        };
        const blob = new Blob([JSON.stringify(data, null, 2)], {
          type: "application/json",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "meeting-setup.json";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      });

      copySummaryBtn.addEventListener("click", async () => {
        const durationMin = parseFloat(durationMinutesInput.value) || 0;
        const participants = getParticipantsHourly();
        const durationHours = durationMin / 60;
        const total = participants.reduce(
          (sum, p) => sum + p.hourly * durationHours,
          0
        );
        const lines = [];
        lines.push(`Meeting summary`);
        lines.push(
          `Date/time (organizer): ${meetingDateInput.value || "N/A"} ${
            meetingTimeInput.value || ""
          } (${organizerTzSelect.value})`
        );
        lines.push(`Duration: ${durationMin} minutes`);
        lines.push(`Currency: ${currencySelect.value}`);
        lines.push(`Estimated cost: ${formatCurrency(total, false)}`);
        lines.push("");
        lines.push(`Participants:`);
        participants.forEach((p) => {
          lines.push(`- ${p.name}: ${formatCurrency(p.hourly, true)}`);
        });
        const text = lines.join("\n");
        try {
          await navigator.clipboard.writeText(text);
          copySummaryBtn.textContent = "Copied!";
          setTimeout(() => {
            copySummaryBtn.textContent = "Copy summary to clipboard";
          }, 1500);
        } catch (e) {
          alert(
            "Could not copy to clipboard. You can still select and copy text manually."
          );
        }
      });

      // Initialize with one participant row in each tab
      addParticipantRow("Organizer");
      addCostParticipantRow("Organizer");
      updateLocalTimes();
      updateCosts();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
