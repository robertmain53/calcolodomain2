    <script>
      // Calculator logic
      function parseOrNull(id) {
        const v = document.getElementById(id).value.trim();
        if (v === "") return null;
        const n = Number(v);
        return isNaN(n) ? null : n;
      }

      function showError(msg) {
        const box = document.getElementById("errorBox");
        box.textContent = msg;
        box.classList.remove("hidden");
      }

      function clearError() {
        const box = document.getElementById("errorBox");
        box.textContent = "";
        box.classList.add("hidden");
      }

      function formatNum(x) {
        if (x === null || x === undefined || isNaN(x)) return "–";
        if (Math.abs(x) >= 1000 || (Math.abs(x) < 0.01 && x !== 0)) {
          return x.toExponential(4);
        }
        return x.toFixed(4);
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          clearError();

          const S = parseOrNull("spotPrice");
          const K = parseOrNull("strikePrice");
          const T = parseOrNull("timeToMaturity");
          const rPct = parseOrNull("riskFreeRate");
          const D = parseOrNull("pvDividends") ?? 0;
          const C = parseOrNull("callPrice");
          const P = parseOrNull("putPrice");

          if (S === null || K === null || T === null || rPct === null) {
            showError(
              "Please enter spot price, strike, time to expiration, and risk-free rate."
            );
            return;
          }
          if (T < 0) {
            showError("Time to expiration T must be non-negative.");
            return;
          }

          const r = rPct / 100;
          const discK = K * Math.exp(-r * T);

          const lhs = (C ?? 0) + discK + D;
          const rhs = (P ?? 0) + S;

          document.getElementById("discStrike").textContent = formatNum(discK);
          document.getElementById("lhsValue").textContent = isNaN(lhs)
            ? "–"
            : formatNum(lhs);
          document.getElementById("rhsValue").textContent = isNaN(rhs)
            ? "–"
            : formatNum(rhs);

          const solveFor = document.querySelector(
            'input[name="solveFor"]:checked'
          ).value;
          const solvedBox = document.getElementById("solvedValue");
          const gapSpan = document.getElementById("parityGap");
          const arbHint = document.getElementById("arbHint");

          let gap = lhs - rhs;
          gapSpan.textContent = isNaN(gap) ? "–" : formatNum(gap);

          let hint =
            "When the gap is close to zero, the market satisfies put-call parity (within rounding and transaction costs).";

          if (!isNaN(gap) && Math.abs(gap) > 1e-4) {
            if (gap > 0) {
              hint =
                "LHS (C + PV(K) + D) is richer than RHS (P + S). Typically, sell call + bond + dividends and buy put + stock (subject to costs and constraints).";
            } else {
              hint =
                "RHS (P + S) is richer than LHS (C + PV(K) + D). Typically, sell put + stock and buy call + bond + dividends (subject to costs and constraints).";
            }
          }
          arbHint.textContent = hint;

          if (solveFor === "call") {
            if (P === null) {
              solvedBox.textContent =
                "To solve for the call price C, please enter a put price P.";
              return;
            }
            const fairC = P + S - discK - D;
            solvedBox.innerHTML =
              "Fair call price from parity: <strong>C = " +
              formatNum(fairC) +
              "</strong>";
          } else if (solveFor === "put") {
            if (C === null) {
              solvedBox.textContent =
                "To solve for the put price P, please enter a call price C.";
              return;
            }
            const fairP = C + discK + D - S;
            solvedBox.innerHTML =
              "Fair put price from parity: <strong>P = " +
              formatNum(fairP) +
              "</strong>";
          } else if (solveFor === "forward") {
            // Synthetic forward: long call + short put
            if (C === null || P === null) {
              solvedBox.textContent =
                "To compute the synthetic forward value, please enter both call and put prices.";
              return;
            }
            const F0 = S - D + (C - P);
            solvedBox.innerHTML =
              "Synthetic forward value from options: <strong>F\u2080 = " +
              formatNum(F0) +
              "</strong>";
          } else if (solveFor === "parityGap") {
            if (isNaN(gap)) {
              solvedBox.textContent =
                "Enter at least one option price (call or put) to compute the parity gap.";
            } else {
              solvedBox.innerHTML =
                "Parity gap (LHS − RHS): <strong>" +
                formatNum(gap) +
                "</strong>";
            }
          }
        });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          [
            "spotPrice",
            "strikePrice",
            "timeToMaturity",
            "riskFreeRate",
            "pvDividends",
            "callPrice",
            "putPrice",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.querySelector(
            'input[name="solveFor"][value="call"]'
          ).checked = true;
          document.getElementById("discStrike").textContent = "–";
          document.getElementById("lhsValue").textContent = "–";
          document.getElementById("rhsValue").textContent = "–";
          document.getElementById("parityGap").textContent = "–";
          document.getElementById("solvedValue").textContent =
            "Select what to solve for and click Calculate.";
          document.getElementById("arbHint").textContent =
            "When the gap is close to zero, the market satisfies put-call parity (within rounding and transaction costs).";
          clearError();
        });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
