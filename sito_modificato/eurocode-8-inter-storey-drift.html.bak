    <script>
      // Utility to create table rows
      function createStoreyRows(n) {
        const tbody = document.getElementById("storeyTableBody");
        tbody.innerHTML = "";
        for (let i = 1; i <= n; i++) {
          const tr = document.createElement("tr");
          tr.className = i % 2 === 0 ? "bg-white" : "bg-gray-50";
          tr.innerHTML = `
        <td class="px-2 py-1 font-medium text-gray-700">Storey ${i}</td>
        <td class="px-2 py-1">
          <input type="number" step="0.0001" min="0" class="w-full border rounded px-2 py-1 input-small h-storey" aria-label="Storey ${i} height">
        </td>
        <td class="px-2 py-1">
          <input type="number" step="0.000001" class="w-full border rounded px-2 py-1 input-small u-bottom" aria-label="Storey ${i} bottom displacement">
        </td>
        <td class="px-2 py-1">
          <input type="number" step="0.000001" class="w-full border rounded px-2 py-1 input-small u-top" aria-label="Storey ${i} top displacement">
        </td>
      `;
          tbody.appendChild(tr);
        }
      }

      function updateUnitLabels() {
        const unit = document.getElementById("unitSelect").value;
        document
          .querySelectorAll(".unit-label")
          .forEach((el) => (el.textContent = unit));
      }

      document
        .getElementById("unitSelect")
        .addEventListener("change", updateUnitLabels);

      document
        .getElementById("limitType")
        .addEventListener("change", function () {
          const customWrapper = document.getElementById("customLimitWrapper");
          if (this.value === "custom") {
            customWrapper.classList.remove("hidden");
          } else {
            customWrapper.classList.add("hidden");
          }
        });

      document
        .getElementById("generateTableBtn")
        .addEventListener("click", function () {
          const n = parseInt(document.getElementById("numStoreys").value, 10);
          if (!n || n < 1) {
            alert("Please enter a valid number of storeys (≥ 1).");
            return;
          }
          createStoreyRows(n);
          document
            .getElementById("storeyTableContainer")
            .classList.remove("hidden");
          document.getElementById("resultsContainer").classList.add("hidden");
        });

      document
        .getElementById("exampleDataBtn")
        .addEventListener("click", function () {
          const n = 5;
          document.getElementById("numStoreys").value = n;
          createStoreyRows(n);
          document
            .getElementById("storeyTableContainer")
            .classList.remove("hidden");

          const heights = [3, 3, 3, 3, 3];
          const u = [0.0, 0.01, 0.022, 0.036, 0.05, 0.062];

          const hInputs = document.querySelectorAll(".h-storey");
          const uBottomInputs = document.querySelectorAll(".u-bottom");
          const uTopInputs = document.querySelectorAll(".u-top");

          for (let i = 0; i < n; i++) {
            hInputs[i].value = heights[i];
            uBottomInputs[i].value = u[i].toFixed(3);
            uTopInputs[i].value = u[i + 1].toFixed(3);
          }

          document.getElementById("unitSelect").value = "m";
          updateUnitLabels();
        });

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const n = parseInt(document.getElementById("numStoreys").value, 10);
          if (!n || n < 1) {
            alert("Please enter a valid number of storeys (≥ 1).");
            return;
          }

          const hInputs = document.querySelectorAll(".h-storey");
          const uBottomInputs = document.querySelectorAll(".u-bottom");
          const uTopInputs = document.querySelectorAll(".u-top");

          if (
            hInputs.length !== n ||
            uBottomInputs.length !== n ||
            uTopInputs.length !== n
          ) {
            alert("Please generate the storey table first.");
            return;
          }

          const limitType = document.getElementById("limitType").value;
          let limit;
          if (limitType === "custom") {
            limit = parseFloat(document.getElementById("customLimit").value);
            if (!limit || limit <= 0) {
              alert("Please enter a valid custom drift limit (ratio > 0).");
              return;
            }
          } else {
            limit = parseFloat(limitType);
          }

          const resultsBody = document.getElementById("resultsTableBody");
          resultsBody.innerHTML = "";

          let maxDriftRatio = -Infinity;
          let maxDriftStorey = null;
          let anyFail = false;

          for (let i = 0; i < n; i++) {
            const h = parseFloat(hInputs[i].value);
            const uBot = parseFloat(uBottomInputs[i].value);
            const uTop = parseFloat(uTopInputs[i].value);

            if (!h || h <= 0 || isNaN(uBot) || isNaN(uTop)) {
              alert(`Please enter valid numeric values for storey ${i + 1}.`);
              return;
            }

            const delta = uTop - uBot;
            const driftRatio = delta / h;
            const driftPercent = driftRatio * 100;
            const pass = driftRatio <= limit + 1e-9;

            if (driftRatio > maxDriftRatio) {
              maxDriftRatio = driftRatio;
              maxDriftStorey = i + 1;
            }
            if (!pass) anyFail = true;

            const tr = document.createElement("tr");
            tr.className = i % 2 === 0 ? "bg-white" : "bg-gray-50";
            tr.innerHTML = `
        <td class="px-2 py-1 font-medium text-gray-700">Storey ${i + 1}</td>
        <td class="px-2 py-1 text-gray-700">${h.toFixed(3)}</td>
        <td class="px-2 py-1 text-gray-700">${delta.toFixed(5)}</td>
        <td class="px-2 py-1 text-gray-700">${driftRatio.toExponential(3)}</td>
        <td class="px-2 py-1 text-gray-700">${driftPercent.toFixed(3)}%</td>
        <td class="px-2 py-1">
          <span class="badge ${
            pass ? "bg-emerald-100 text-emerald-700" : "bg-red-100 text-red-700"
          }">
            ${pass ? "OK" : "Exceeds limit"}
          </span>
        </td>
      `;
            resultsBody.appendChild(tr);
          }

          const limitDisplay = document.getElementById("limitDisplay");
          limitDisplay.textContent = `Current drift limit: θ_lim = ${limit.toFixed(
            4
          )} (${(limit * 100).toFixed(2)}%)`;

          const summaryBox = document.getElementById("summaryBox");
          const maxPercent = maxDriftRatio * 100;
          summaryBox.innerHTML = `
      <div class="p-3 rounded-md ${
        anyFail
          ? "bg-red-50 border border-red-200 text-red-800"
          : "bg-emerald-50 border border-emerald-200 text-emerald-800"
      }">
        <p class="font-semibold mb-1">${
          anyFail
            ? "Drift limit exceeded in at least one storey."
            : "All storeys satisfy the selected Eurocode 8 drift limit."
        }</p>
        <p class="text-sm">
          Governing storey: <strong>${maxDriftStorey}</strong> with drift ratio
          <strong>θ = ${maxDriftRatio.toFixed(4)} (${maxPercent.toFixed(
            2
          )}%)</strong>.
        </p>
      </div>
    `;

          document
            .getElementById("resultsContainer")
            .classList.remove("hidden");
        });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("numStoreys").value = 5;
          document.getElementById("unitSelect").value = "m";
          document.getElementById("limitType").value = "0.005";
          document.getElementById("customLimit").value = 0.01;
          document.getElementById("customLimitWrapper").classList.add("hidden");
          document.getElementById("storeyTableBody").innerHTML = "";
          document
            .getElementById("storeyTableContainer")
            .classList.add("hidden");
          document.getElementById("resultsContainer").classList.add("hidden");
          document.getElementById("limitDisplay").textContent = "";
          updateUnitLabels();
        });

      // Initialize unit labels
      updateUnitLabels();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
