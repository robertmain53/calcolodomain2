    <script>
      (function () {
        function $(id) {
          return document.getElementById(id);
        }
        function show(el) {
          el && el.classList.remove("hidden");
        }
        function hide(el) {
          el && el.classList.add("hidden");
        }

        // Mobile menu
        var toggle = document.getElementById("mobile-menu-toggle");
        var mobileMenu = document.getElementById("mobile-menu");
        if (toggle && mobileMenu) {
          toggle.addEventListener("click", function () {
            var isHidden = mobileMenu.classList.contains("hidden");
            if (isHidden) {
              mobileMenu.classList.remove("hidden");
              toggle.setAttribute("aria-expanded", "true");
            } else {
              mobileMenu.classList.add("hidden");
              toggle.setAttribute("aria-expanded", "false");
            }
          });
        }

        // Tabs
        var tabButtons = document.querySelectorAll(".tab-button[data-ba-tab]");
        var twoPanel = $("ba-two-number-panel");
        var exprPanel = $("ba-expression-panel");

        function activateTab(tab) {
          tabButtons.forEach(function (btn) {
            var t = btn.getAttribute("data-ba-tab");
            if (t === tab) btn.classList.add("active");
            else btn.classList.remove("active");
          });
          if (tab === "two-number") {
            show(twoPanel);
            hide(exprPanel);
          } else {
            hide(twoPanel);
            show(exprPanel);
          }
        }

        tabButtons.forEach(function (btn) {
          btn.addEventListener("click", function () {
            var t = btn.getAttribute("data-ba-tab");
            activateTab(t);
          });
        });

        // Parsing helpers
        function parseNumber(value) {
          var s = String(value || "").trim();
          if (!s) return { ok: false, error: "Value is empty." };
          if (!/^[+-]?(?:\d+(?:\.\d*)?|\.\d+)$/.test(s)) {
            return {
              ok: false,
              error:
                "Please enter a valid number (integer or decimal, with optional sign).",
            };
          }
          var n = Number(s);
          if (!Number.isFinite(n)) {
            return {
              ok: false,
              error: "Value is too large or not a finite number.",
            };
          }
          return { ok: true, value: n };
        }

        // Two-number mode
        var twoForm = $("ba-two-form");
        var aInput = $("ba-a");
        var bInput = $("ba-b");
        var opSelect = $("ba-op");
        var twoError = $("ba-two-error");
        var twoResults = $("ba-two-results");
        var twoMain = $("ba-two-main");
        var twoSteps = $("ba-two-steps");
        var twoSwap = $("ba-two-swap");
        var twoReset = $("ba-two-reset");

        function formatOpSymbol(op) {
          if (op === "add") return "+";
          if (op === "sub") return "−";
          if (op === "mul") return "×";
          if (op === "div") return "÷";
          return "?";
        }

        function handleTwoSubmit(e) {
          e.preventDefault();
          hide(twoError);
          hide(twoResults);
          twoMain.innerHTML = "";
          twoSteps.textContent = "";

          var pa = parseNumber(aInput.value);
          if (!pa.ok) {
            twoError.textContent = "First number: " + pa.error;
            show(twoError);
            return;
          }
          var pb = parseNumber(bInput.value);
          if (!pb.ok) {
            twoError.textContent = "Second number: " + pb.error;
            show(twoError);
            return;
          }
          var a = pa.value;
          var b = pb.value;
          var op = opSelect.value;

          var result;
          if (op === "add") {
            result = a + b;
          } else if (op === "sub") {
            result = a - b;
          } else if (op === "mul") {
            result = a * b;
          } else if (op === "div") {
            if (b === 0) {
              twoError.textContent =
                "Division by zero is undefined. Please choose a non-zero second number.";
              show(twoError);
              return;
            }
            result = a / b;
          } else {
            twoError.textContent = "Unknown operation.";
            show(twoError);
            return;
          }

          var symbol = formatOpSymbol(op);
          twoMain.innerHTML =
            '<span class="vector-pill">a = ' +
            a +
            "</span>" +
            '<span class="vector-pill">b = ' +
            b +
            "</span>" +
            '<span class="vector-pill">a ' +
            symbol +
            " b = <strong>" +
            result +
            "</strong></span>";

          var explanation;
          if (op === "add") {
            explanation =
              "Addition: you are combining the two quantities. The result is the total of " +
              a +
              " and " +
              b +
              ".";
          } else if (op === "sub") {
            explanation =
              "Subtraction: you start from " +
              a +
              " and move " +
              Math.abs(b) +
              " units in the opposite direction of the sign of b, ending at " +
              result +
              ".";
          } else if (op === "mul") {
            explanation =
              "Multiplication: you are taking " +
              a +
              " repeated " +
              b +
              " times (or vice versa). The result is the same as adding " +
              a +
              " to itself |" +
              b +
              "| times, with sign rules applied.";
          } else {
            explanation =
              "Division: you are splitting " +
              a +
              " into " +
              b +
              " equal parts (or groups). Each part has size " +
              result +
              ".";
          }

          twoSteps.textContent = explanation;
          show(twoResults);
        }

        function handleTwoSwap() {
          var tmp = aInput.value;
          aInput.value = bInput.value;
          bInput.value = tmp;
        }

        function handleTwoReset() {
          aInput.value = "7";
          bInput.value = "3";
          opSelect.value = "add";
          hide(twoError);
          hide(twoResults);
          twoMain.innerHTML = "";
          twoSteps.textContent = "";
        }

        if (twoForm) twoForm.addEventListener("submit", handleTwoSubmit);
        if (twoSwap) twoSwap.addEventListener("click", handleTwoSwap);
        if (twoReset) twoReset.addEventListener("click", handleTwoReset);

        // Expression mode
        var exprForm = $("ba-expr-form");
        var exprInput = $("ba-expr");
        var exprError = $("ba-expr-error");
        var exprResults = $("ba-expr-results");
        var exprMain = $("ba-expr-main");
        var exprNote = $("ba-expr-note");
        var exprReset = $("ba-expr-reset");

        function isSafeExpression(str) {
          // Allow digits, + - * / . parentheses and spaces
          return /^[0-9+\-*/().\s]+$/.test(str);
        }

        function handleExprSubmit(e) {
          e.preventDefault();
          hide(exprError);
          hide(exprResults);
          exprMain.textContent = "";
          exprNote.textContent = "";

          var expr = String(exprInput.value || "").trim();
          if (!expr) {
            exprError.textContent = "Please enter an expression to evaluate.";
            show(exprError);
            return;
          }
          if (!isSafeExpression(expr)) {
            exprError.textContent =
              "Expression contains unsupported characters. Use digits, decimal point, +, -, *, /, parentheses, and spaces only.";
            show(exprError);
            return;
          }

          var result;
          try {
            // Safe-ish evaluation in a sandboxed Function, after strict character filtering
            // eslint-disable-next-line no-new-func
            var fn = new Function('"use strict"; return (' + expr + ");");
            result = fn();
          } catch (err) {
            exprError.textContent =
              "The expression could not be evaluated. Please check parentheses and operators.";
            show(exprError);
            return;
          }

          if (typeof result !== "number" || !Number.isFinite(result)) {
            exprError.textContent =
              "The expression does not evaluate to a finite number.";
            show(exprError);
            return;
          }

          exprMain.innerHTML =
            "Using the standard order of operations, the expression " +
            '<span class="inline-code">' +
            expr.replace(/</g, "&lt;").replace(/>/g, "&gt;") +
            "</span> evaluates to <strong>" +
            result +
            "</strong>.";

          exprNote.textContent =
            "Parentheses are evaluated first, then multiplication and division, then addition and subtraction, all from left to right at each stage.";
          show(exprResults);
        }

        function handleExprReset() {
          exprInput.value = "7 + 3 * 2";
          hide(exprError);
          hide(exprResults);
          exprMain.textContent = "";
          exprNote.textContent = "";
        }

        if (exprForm) exprForm.addEventListener("submit", handleExprSubmit);
        if (exprReset) exprReset.addEventListener("click", handleExprReset);

        // Default active tab
        activateTab("two-number");

        if (window.MathJax && window.MathJax.typesetPromise) {
          window.MathJax.typesetPromise();
        }
      })();
    </script>
  
