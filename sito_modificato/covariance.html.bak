<script="">
        document.getElementById('calculateCovariance').addEventListener('click', function() {
            const asset1Returns = document.getElementById('asset1Returns').value.split(',').map(Number);
            const asset2Returns = document.getElementById('asset2Returns').value.split(',').map(Number);

            if (asset1Returns.length !== asset2Returns.length) {
                alert('Return series must have the same length.');
                return;
            }

            const mean1 = asset1Returns.reduce((acc, val) => acc + val, 0) / asset1Returns.length;
            const mean2 = asset2Returns.reduce((acc, val) => acc + val, 0) / asset2Returns.length;

            const covariance = asset1Returns.reduce((acc, val, index) => {
                return acc + (val - mean1) * (asset2Returns[index] - mean2);
            }, 0) / (asset1Returns.length - 1);

            document.getElementById('covarianceValue').textContent = covariance.toFixed(2);
        });
    </script>


