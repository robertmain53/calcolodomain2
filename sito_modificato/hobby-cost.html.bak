<script>
        function calculateCost() {
            const hobbyCost = parseFloat(document.getElementById('hobbyCost').value);
            const months = parseInt(document.getElementById('months').value);
            const hobbyCostError = document.getElementById('hobbyCostError');
            const monthsError = document.getElementById('monthsError');
            hobbyCostError.textContent = '';
            monthsError.textContent = '';

            if (isNaN(hobbyCost) || hobbyCost <= 0) {
                hobbyCostError.textContent = 'Please enter a valid monthly hobby cost.';
                return;
            }

            if (isNaN(months) || months <= 0) {
                monthsError.textContent = 'Please enter a valid number of months.';
                return;
            }

            const totalCost = hobbyCost * months;
            document.getElementById('totalCostValue').textContent = `$${totalCost.toFixed(2)}`;
        }
    </script>


