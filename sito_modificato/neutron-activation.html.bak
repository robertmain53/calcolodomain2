    <script>
      // Preset isotope data: atomic mass (g/mol), half-life (h), cross-section (barns), abundance
      const isotopePresets = {
        Au197: { A: 197, halfLifeH: 64.7, sigmaBarn: 98.8, abundance: 1.0 },
        Na23: { A: 23, halfLifeH: 15.0, sigmaBarn: 0.53, abundance: 1.0 },
        Mn55: { A: 54.94, halfLifeH: 2.58, sigmaBarn: 13.3, abundance: 1.0 },
      };

      document
        .getElementById("presetIsotope")
        .addEventListener("change", function () {
          const key = this.value;
          if (!key || !isotopePresets[key]) return;
          const iso = isotopePresets[key];
          document.getElementById("atomicMass").value = iso.A;
          document.getElementById("halfLifeHours").value = iso.halfLifeH;
          document.getElementById("crossSectionBarn").value = iso.sigmaBarn;
          document.getElementById("abundance").value = iso.abundance;
        });

      function parseNum(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isNaN(v) ? null : v;
      }

      document.getElementById("calcBtn").addEventListener("click", function () {
        const A = parseNum("atomicMass"); // g/mol
        const f = parseNum("abundance"); // fraction
        const mMg = parseNum("sampleMassMg"); // mg
        const sigmaBarn = parseNum("crossSectionBarn"); // barns
        const flux = parseNum("flux"); // n/cm2/s
        const T12h = parseNum("halfLifeHours"); // h

        const tIrrH = parseNum("tIrrHours");
        const tCoolH = parseNum("tCoolHours");
        const tCountH = parseNum("tCountHours");

        if (
          !A ||
          !f ||
          !mMg ||
          !sigmaBarn ||
          !flux ||
          !T12h ||
          !tIrrH ||
          tIrrH < 0 ||
          tCoolH === null ||
          tCountH === null
        ) {
          alert(
            "Please fill in all required numeric fields (target, flux, half-life, and times)."
          );
          return;
        }

        const m = mMg / 1000.0; // g
        const NA = 6.02214076e23;
        const sigma = sigmaBarn * 1e-24; // barns -> cm2
        const T12s = T12h * 3600.0;
        const lambda = Math.log(2) / T12s;

        const tIrr = tIrrH * 3600.0;
        const tCool = tCoolH * 3600.0;
        const tCount = tCountH * 3600.0;

        const N = ((m * f) / A) * NA;
        const R = N * sigma * flux; // Bq at saturation
        const Asat = R;
        const AEOI = R * (1 - Math.exp(-lambda * tIrr));
        const Astart = AEOI * Math.exp(-lambda * tCool);

        let Aavg;
        if (tCount > 0) {
          const factor = (1 - Math.exp(-lambda * tCount)) / (lambda * tCount);
          Aavg = Astart * factor;
        } else {
          Aavg = Astart;
        }

        const eff = parseNum("efficiency");
        const Pgamma = parseNum("gammaYield");
        const minCps = parseNum("minCps");

        let counts = null,
          cps = null,
          MDA = null,
          MDMmg = null,
          note = "";

        if (eff && Pgamma && tCount > 0) {
          counts = Aavg * eff * Pgamma * tCount;
          cps = counts / tCount;
        } else {
          note =
            "Provide efficiency, gamma yield, and counting time to estimate counts and detection limits.";
        }

        if (eff && Pgamma && minCps) {
          MDA = minCps / (eff * Pgamma); // Bq at start of counting
          const denom =
            sigma *
            flux *
            (1 - Math.exp(-lambda * tIrr)) *
            Math.exp(-lambda * tCool);
          if (denom > 0) {
            const mMin = (MDA / denom) * (A / (NA * f)); // g
            MDMmg = mMin * 1000.0;
          }
        }

        const fmt = (x, digits = 3) => {
          if (x === null || !isFinite(x)) return "–";
          if (x === 0) return "0";
          const absx = Math.abs(x);
          if (absx >= 1e4 || absx < 1e-2) return x.toExponential(digits);
          return x.toFixed(digits);
        };

        document.getElementById("resN").textContent = fmt(N, 3);
        document.getElementById("resLambda").textContent = fmt(lambda, 4);
        document.getElementById("resR").textContent = fmt(R, 3);
        document.getElementById("resAsat").textContent = fmt(Asat, 3);
        document.getElementById("resAEOI").textContent = fmt(AEOI, 3);
        document.getElementById("resAStart").textContent = fmt(Astart, 3);
        document.getElementById("resAavg").textContent = fmt(Aavg, 3);

        document.getElementById("resCounts").textContent = fmt(counts, 3);
        document.getElementById("resCps").textContent = fmt(cps, 4);
        document.getElementById("resMda").textContent = fmt(MDA, 3);
        document.getElementById("resMdm").textContent = fmt(MDMmg, 3);
        document.getElementById("resNote").textContent = note;
      });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("presetIsotope").value = "";
          document.getElementById("atomicMass").value = 197;
          document.getElementById("abundance").value = 1;
          document.getElementById("sampleMassMg").value = 10;
          document.getElementById("crossSectionBarn").value = 98.8;
          document.getElementById("flux").value = 1e12;
          document.getElementById("halfLifeHours").value = 64.7;
          document.getElementById("tIrrHours").value = 2;
          document.getElementById("tCoolHours").value = 4;
          document.getElementById("tCountHours").value = 1;
          document.getElementById("efficiency").value = 0.1;
          document.getElementById("gammaYield").value = 0.95;
          document.getElementById("minCps").value = 0.5;

          [
            "resN",
            "resLambda",
            "resR",
            "resAsat",
            "resAEOI",
            "resAStart",
            "resAavg",
            "resCounts",
            "resCps",
            "resMda",
            "resMdm",
          ].forEach((id) => {
            document.getElementById(id).textContent = "–";
          });
          document.getElementById("resNote").textContent = "";
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
