    <script>
      // Tab handling
      const tabs = {
        cigarettes: {
          button: document.getElementById("tab-cigarettes"),
          panel: document.getElementById("panel-cigarettes"),
        },
        vaping: {
          button: document.getElementById("tab-vaping"),
          panel: document.getElementById("panel-vaping"),
        },
        both: {
          button: document.getElementById("tab-both"),
          panel: document.getElementById("panel-both"),
        },
      };

      function setActiveTab(name) {
        Object.keys(tabs).forEach((key) => {
          const { button, panel } = tabs[key];
          if (key === name) {
            button.classList.remove("text-gray-500", "border-transparent");
            button.classList.add("text-blue-600", "border-blue-600");
            panel.classList.remove("hidden");
          } else {
            button.classList.add("text-gray-500", "border-transparent");
            button.classList.remove("text-blue-600", "border-blue-600");
            panel.classList.add("hidden");
          }
        });
      }

      tabs.cigarettes.button.addEventListener("click", () =>
        setActiveTab("cigarettes")
      );
      tabs.vaping.button.addEventListener("click", () =>
        setActiveTab("vaping")
      );
      tabs.both.button.addEventListener("click", () => setActiveTab("both"));

      // Advanced toggle
      const advancedBtn = document.getElementById("toggle-advanced");
      const advancedContent = document.getElementById("advanced-content");
      const advancedIcon = document.getElementById("advanced-icon");

      advancedBtn.addEventListener("click", () => {
        const isHidden = advancedContent.classList.contains("hidden");
        advancedContent.classList.toggle("hidden");
        advancedIcon.textContent = isHidden ? "▾" : "▸";
      });

      // Discount rate display
      const discountRateInput = document.getElementById("discount-rate");
      const discountRateOutput = document.getElementById(
        "discount-rate-output"
      );
      discountRateInput.addEventListener("input", () => {
        discountRateOutput.textContent = discountRateInput.value + "%";
      });

      // Utility: safe number parsing
      function val(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const n = parseFloat(el.value);
        return isNaN(n) ? 0 : n;
      }

      function formatMoney(num) {
        if (!isFinite(num)) return "$0.00";
        return "$" + num.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      // Core calculation
      function calculateSmokingCost() {
        const errorEl = document.getElementById("error-message");
        errorEl.classList.add("hidden");

        // Basic validation: no negatives
        const inputs = document.querySelectorAll(
          '#smoking-cost-form input[type="number"]'
        );
        for (const input of inputs) {
          if (input.value === "") continue;
          if (parseFloat(input.value) < 0) {
            errorEl.textContent =
              "Please check your inputs. Values cannot be negative.";
            errorEl.classList.remove("hidden");
            return;
          }
        }

        // Determine active tab
        let activeTab = "cigarettes";
        if (!tabs.cigarettes.panel.classList.contains("hidden"))
          activeTab = "cigarettes";
        if (!tabs.vaping.panel.classList.contains("hidden"))
          activeTab = "vaping";
        if (!tabs.both.panel.classList.contains("hidden")) activeTab = "both";

        let directDaily = 0;
        let directMonthly = 0;

        if (activeTab === "cigarettes") {
          const cigsPerDay = val("cigs-per-day");
          const daysPerWeek =
            Math.min(Math.max(val("days-per-week"), 0), 7) || 0;
          const pricePerPack = val("price-per-pack");
          const cigsPerPack = Math.max(val("cigs-per-pack"), 1);
          const extraMonthly = val("extra-monthly-cost");

          const avgCigsPerDay = cigsPerDay * (daysPerWeek / 7);
          const costPerCig = pricePerPack / cigsPerPack;
          const cigDaily = avgCigsPerDay * costPerCig;

          const cigMonthly = cigDaily * 30.4;
          directDaily = cigDaily;
          directMonthly = cigMonthly + extraMonthly;
        } else if (activeTab === "vaping") {
          const mlPerDay = val("ml-per-day");
          const daysPerWeek =
            Math.min(Math.max(val("vape-days-per-week"), 0), 7) || 0;
          const bottleSize = Math.max(val("bottle-size"), 1);
          const pricePerBottle = val("price-per-bottle");
          const extraMonthly = val("vape-extra-monthly-cost");

          const avgMlPerDay = mlPerDay * (daysPerWeek / 7);
          const costPerMl = pricePerBottle / bottleSize;
          const vapeDaily = avgMlPerDay * costPerMl;

          const vapeMonthly = vapeDaily * 30.4;
          directDaily = vapeDaily;
          directMonthly = vapeMonthly + extraMonthly;
        } else if (activeTab === "both") {
          // Cigarettes part
          const cigsPerDay = val("both-cigs-per-day");
          const daysPerWeek =
            Math.min(Math.max(val("both-days-per-week"), 0), 7) || 0;
          const pricePerPack = val("both-price-per-pack");
          const cigsPerPack = Math.max(val("both-cigs-per-pack"), 1);

          const avgCigsPerDay = cigsPerDay * (daysPerWeek / 7);
          const costPerCig = pricePerPack / cigsPerPack;
          const cigDaily = avgCigsPerDay * costPerCig;
          const cigMonthly = cigDaily * 30.4;

          // Vaping part
          const mlPerDay = val("both-ml-per-day");
          const vapeDaysPerWeek =
            Math.min(Math.max(val("both-vape-days-per-week"), 0), 7) || 0;
          const bottleSize = Math.max(val("both-bottle-size"), 1);
          const pricePerBottle = val("both-price-per-bottle");

          const avgMlPerDay = mlPerDay * (vapeDaysPerWeek / 7);
          const costPerMl = pricePerBottle / bottleSize;
          const vapeDaily = avgMlPerDay * costPerMl;
          const vapeMonthly = vapeDaily * 30.4;

          const extraMonthly = val("both-extra-monthly-cost");

          directDaily = cigDaily + vapeDaily;
          directMonthly = cigMonthly + vapeMonthly + extraMonthly;
        }

        // Derive weekly, yearly, lifetime
        const directPerDay = directDaily;
        const directPerWeek = directPerDay * 7;
        const directPerMonth = directMonthly;
        const directPerYear =
          directPerDay * 365 +
          ((directPerMonth - directPerDay * 30.4) * 12) / 12; // ensure consistency with monthly extras

        const yearsSmoking = Math.max(val("years-smoking"), 1);
        const directLifetime = directPerYear * yearsSmoking;

        // Indirect costs
        const healthcarePerYear = val("healthcare-per-year");
        const productivityPerYear = val("productivity-per-year");
        const indirectPerYear = healthcarePerYear + productivityPerYear;

        const totalPerYear = directPerYear + indirectPerYear;
        const totalLifetime = totalPerYear * yearsSmoking;

        // Present value
        const rPercent = val("discount-rate");
        const r = rPercent / 100;
        let pvFactor;
        if (r === 0) {
          pvFactor = yearsSmoking;
        } else {
          pvFactor = (1 - Math.pow(1 + r, -yearsSmoking)) / r;
        }
        const totalLifetimePV = totalPerYear * pvFactor;

        // Savings if quit
        const savingsPerMonth = directPerMonth + indirectPerYear / 12;
        const savings5Years = totalPerYear * 5;

        // Update UI
        document.getElementById("direct-per-day").textContent =
          formatMoney(directPerDay);
        document.getElementById("direct-per-week").textContent =
          formatMoney(directPerWeek);
        document.getElementById("direct-per-month").textContent =
          formatMoney(directPerMonth);
        document.getElementById("direct-per-year").textContent =
          formatMoney(directPerYear);
        document.getElementById("direct-lifetime").textContent =
          formatMoney(directLifetime);

        document.getElementById("indirect-per-year").textContent =
          formatMoney(indirectPerYear);
        document.getElementById("total-per-year").textContent =
          formatMoney(totalPerYear);
        document.getElementById("total-lifetime").textContent =
          formatMoney(totalLifetime);
        document.getElementById("total-lifetime-pv").textContent =
          formatMoney(totalLifetimePV);

        document.getElementById("savings-per-month").textContent =
          formatMoney(savingsPerMonth);
        document.getElementById("savings-5-years").textContent =
          formatMoney(savings5Years);
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateSmokingCost);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("smoking-cost-form").reset();
        discountRateOutput.textContent = discountRateInput.value + "%";
        document.getElementById("error-message").classList.add("hidden");
        // Recalculate with defaults
        calculateSmokingCost();
      });

      // Auto-calc on load with defaults
      window.addEventListener("DOMContentLoaded", calculateSmokingCost);
    </script>

