    <script>
      // Goal buttons toggle
      const goalButtons = document.querySelectorAll(".goal-btn");
      let currentGoal = "general";

      goalButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          currentGoal = btn.dataset.goal;
          goalButtons.forEach((b) => {
            b.classList.remove(
              "bg-blue-50",
              "border-blue-500",
              "text-blue-700"
            );
            b.classList.add("bg-white", "border-gray-300", "text-gray-700");
          });
          btn.classList.add("bg-blue-50", "border-blue-500", "text-blue-700");
          btn.classList.remove("bg-white", "border-gray-300", "text-gray-700");
        });
      });

      function estimateCalories(age, sex) {
        // Very rough default estimates when user does not provide calories
        if (sex === "male") {
          if (age < 19) return 2400;
          if (age <= 30) return 2600;
          if (age <= 50) return 2400;
          return 2200;
        } else {
          if (age < 19) return 2000;
          if (age <= 30) return 2000;
          if (age <= 50) return 1900;
          return 1800;
        }
      }

      function baselineFiberByAgeSex(age, sex) {
        // Approximate AI values (grams/day)
        if (age < 14) {
          return sex === "male" ? 25 : 22;
        } else if (age <= 18) {
          return sex === "male" ? 30 : 25;
        } else if (age <= 50) {
          return sex === "male" ? 34 : 26;
        } else {
          return sex === "male" ? 30 : 22;
        }
      }

      function applyGoalAdjustment(fiber, goal) {
        let factor = 1;
        if (goal === "cholesterol" || goal === "bloodSugar") {
          factor = 1.1;
        } else if (goal === "weightLoss") {
          factor = 1.15;
        }
        return fiber * factor;
      }

      function estimateCurrentFiberFromServings() {
        const getVal = (id) =>
          parseFloat(document.getElementById(id).value) || 0;
        const wholeGrains = getVal("servings-whole-grains"); // ~3 g/serving
        const legumes = getVal("servings-legumes"); // ~7 g/serving
        const fruit = getVal("servings-fruit"); // ~3.5 g/serving
        const veg = getVal("servings-veg"); // ~3 g/serving
        const nuts = getVal("servings-nuts"); // ~2.5 g/serving
        const other = getVal("servings-other"); // ~3 g/serving

        const total =
          wholeGrains * 3 +
          legumes * 7 +
          fruit * 3.5 +
          veg * 3 +
          nuts * 2.5 +
          other * 3;

        return total;
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const sex = document.getElementById("sex").value;
        const age = parseInt(document.getElementById("age").value, 10);
        const caloriesInput = parseFloat(
          document.getElementById("calories").value
        );

        const errorEl = document.getElementById("calc-error");
        if (!age || age < 1 || age > 120) {
          errorEl.textContent = "Please enter a valid age between 1 and 120.";
          errorEl.classList.remove("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const calories =
          caloriesInput && caloriesInput > 0
            ? caloriesInput
            : estimateCalories(age, sex);
        const baseline = baselineFiberByAgeSex(age, sex);
        const kcalBased = 14 * (calories / 1000);
        // Average the two approaches for a balanced estimate
        let target = (baseline + kcalBased) / 2;
        target = applyGoalAdjustment(target, currentGoal);
        target = Math.round(target);

        const current =
          Math.round(estimateCurrentFiberFromServings() * 10) / 10;
        const gap = Math.round((target - current) * 10) / 10;

        document.getElementById("target-fiber").textContent = target.toFixed(0);
        document.getElementById("current-fiber").textContent =
          current.toFixed(1);
        document.getElementById("fiber-gap").textContent =
          (gap > 0 ? "+" + gap.toFixed(1) : gap.toFixed(1)) + " g/day";

        const noteEl = document.getElementById("target-fiber-note");
        const goalTextMap = {
          general:
            "Balanced intake for overall digestive and metabolic health.",
          cholesterol:
            "Slightly higher target to support healthy cholesterol levels.",
          bloodSugar:
            "Slightly higher target to help smooth blood sugar swings.",
          weightLoss:
            "Higher end of the range to support fullness and appetite control.",
        };
        noteEl.textContent = goalTextMap[currentGoal] || goalTextMap.general;

        const gapMsg = document.getElementById("gap-message");
        if (current === 0) {
          gapMsg.innerHTML =
            '<p class="text-sm text-gray-700">You did not enter any foods, so we could not estimate your current intake. Use the food section above to see how your usual diet compares to your target.</p>';
        } else if (gap > 5) {
          gapMsg.innerHTML =
            '<p class="text-sm text-red-700">You appear to be <strong>below</strong> your target by more than 5 g/day. Consider adding 1–2 high‑fiber foods daily and increasing gradually.</p>';
        } else if (gap > 0) {
          gapMsg.innerHTML =
            '<p class="text-sm text-yellow-700">You are slightly below your target. A few small changes (like an extra serving of fruit or beans) could close the gap.</p>';
        } else if (gap >= -10) {
          gapMsg.innerHTML =
            '<p class="text-sm text-green-700">You are meeting or slightly exceeding your target. If you feel well and have no digestive issues, this is generally a healthy range.</p>';
        } else {
          gapMsg.innerHTML =
            '<p class="text-sm text-blue-700">Your estimated intake is well above the target. If you experience bloating or discomfort, consider spreading fiber more evenly across meals and ensuring adequate fluid intake.</p>';
        }

        document.getElementById("results-section").classList.remove("hidden");
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("sex").value = "female";
        document.getElementById("age").value = 30;
        document.getElementById("weight").value = "";
        document.getElementById("weight-unit").value = "kg";
        document.getElementById("calories").value = "";
        [
          "servings-whole-grains",
          "servings-legumes",
          "servings-fruit",
          "servings-veg",
          "servings-nuts",
          "servings-other",
        ].forEach((id) => {
          document.getElementById(id).value = 0;
        });
        document.getElementById("results-section").classList.add("hidden");
        document.getElementById("calc-error").classList.add("hidden");

        // Reset goal buttons
        currentGoal = "general";
        goalButtons.forEach((b) => {
          b.classList.remove("bg-blue-50", "border-blue-500", "text-blue-700");
          b.classList.add("bg-white", "border-gray-300", "text-gray-700");
        });
        const defaultBtn = document.querySelector(
          '.goal-btn[data-goal="general"]'
        );
        defaultBtn.classList.add(
          "bg-blue-50",
          "border-blue-500",
          "text-blue-700"
        );
        defaultBtn.classList.remove(
          "bg-white",
          "border-gray-300",
          "text-gray-700"
        );
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
