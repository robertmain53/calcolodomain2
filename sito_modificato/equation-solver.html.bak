    <script>
      // Tab switching
      const tabSingle = document.getElementById("tab-single-equation");
      const tabSystem = document.getElementById("tab-system-equations");
      const panelSingle = document.getElementById("panel-single-equation");
      const panelSystem = document.getElementById("panel-system-equations");

      function activateTab(tab) {
        if (!tabSingle || !tabSystem || !panelSingle || !panelSystem) return;
        if (tab === "single") {
          tabSingle.classList.add("tab-button-active");
          tabSingle.classList.remove("text-gray-500", "border-transparent");
          tabSystem.classList.remove("tab-button-active");
          tabSystem.classList.add("text-gray-500");
          panelSingle.classList.remove("hidden");
          panelSystem.classList.add("hidden");
        } else {
          tabSystem.classList.add("tab-button-active");
          tabSystem.classList.remove("text-gray-500", "border-transparent");
          tabSingle.classList.remove("tab-button-active");
          tabSingle.classList.add("text-gray-500");
          panelSystem.classList.remove("hidden");
          panelSingle.classList.add("hidden");
        }
      }

      if (tabSingle && tabSystem) {
        tabSingle.addEventListener("click", () => activateTab("single"));
        tabSystem.addEventListener("click", () => activateTab("system"));
      }

      // Utility: sanitize and build a JS function from expression string
      function buildFunctionFromString(expr) {
        if (typeof expr !== "string") return null;
        let cleaned = expr.trim();

        // Basic safety: disallow semicolons and braces
        if (/[;{}]/.test(cleaned)) {
          return null;
        }

        // Replace mathematical tokens with JS equivalents
        cleaned = cleaned.replace(/\^/g, "**");
        cleaned = cleaned.replace(/\bpi\b/gi, "Math.PI");
        cleaned = cleaned.replace(/\be\b/g, "Math.E");

        const fnMap = ["sin", "cos", "tan", "log", "ln", "sqrt", "abs", "exp"];
        fnMap.forEach((name) => {
          if (name === "ln") {
            cleaned = cleaned.replace(/\bln\(/g, "Math.log(");
          } else if (name === "log") {
            cleaned = cleaned.replace(/\blog\(/g, "Math.log10(");
          } else if (name === "sqrt") {
            cleaned = cleaned.replace(/\bsqrt\(/g, "Math.sqrt(");
          } else if (name === "abs") {
            cleaned = cleaned.replace(/\babs\(/g, "Math.abs(");
          } else if (name === "exp") {
            cleaned = cleaned.replace(/\bexp\(/g, "Math.exp(");
          } else {
            cleaned = cleaned.replace(
              new RegExp("\\b" + name + "\\(", "g"),
              "Math." + name + "("
            );
          }
        });

        try {
          const f = new Function("x", "return " + cleaned + ";");
          // Test evaluation
          const testVal = f(0);
          if (!isFinite(testVal) && testVal !== 0) {
            // Still accept; numeric solver will handle issues
          }
          return f;
        } catch (e) {
          return null;
        }
      }

      // Linear parser: ax + b = c
      function solveLinearAnalytic(equation) {
        const result = { steps: [], solution: null, error: null };
        let eq = equation.replace(/\s+/g, "");
        const parts = eq.split("=");
        if (parts.length !== 2) {
          result.error =
            "Please enter a single “=” sign to separate the left and right sides.";
          return result;
        }
        const left = parts[0];
        const right = parts[1];

        // Match ax + b on the left, constant on the right
        const match = left.match(/^([+-]?\d*\.?\d*)x([+-]\d*\.?\d*)?$/);
        if (!match) {
          result.error =
            "For the linear mode, use the form ax + b = c with only one x-term on the left.";
          return result;
        }

        let aStr = match[1];
        let bStr = match[2] || "+0";

        if (aStr === "" || aStr === "+" || aStr === "-") {
          aStr = aStr === "-" ? "-1" : "1";
        }

        const a = parseFloat(aStr);
        const b = parseFloat(bStr);
        const c = parseFloat(right);

        if (!isFinite(a) || !isFinite(b) || !isFinite(c)) {
          result.error =
            "Could not parse the coefficients as numbers. Check your equation.";
          return result;
        }
        if (a === 0) {
          result.error =
            "The coefficient of x (a) is zero, so this is not a linear equation in x.";
          return result;
        }

        result.steps.push(`Original equation: ${equation}`);
        result.steps.push(
          `Identify coefficients: a = ${a}, b = ${b}, c = ${c}`
        );
        result.steps.push(
          `Move b to the right-hand side: ax = c - b = ${c} - ${b} = ${c - b}`
        );
        const numerator = c - b;
        const x = numerator / a;
        result.steps.push(
          `Divide both sides by a: x = (c - b) / a = ${numerator} / ${a} = ${x}`
        );
        result.solution = x;
        return result;
      }

      // Quadratic parser: ax^2 + bx + c = 0
      function solveQuadraticAnalytic(equation) {
        const result = {
          steps: [],
          solution: null,
          solution2: null,
          discriminant: null,
          error: null,
        };
        let eq = equation.replace(/\s+/g, "");
        const parts = eq.split("=");
        if (parts.length !== 2) {
          result.error =
            "Please enter a single “=” sign and move everything to one side, e.g. 3x^2 - 5x + 2 = 0.";
          return result;
        }
        const left = parts[0];
        const right = parts[1];

        if (right !== "0") {
          result.error =
            "For the quadratic mode, please write the equation in the form ax^2 + bx + c = 0.";
          return result;
        }

        const match = left.match(
          /^([+-]?\d*\.?\d*)x\^2([+-]\d*\.?\d*)x([+-]\d*\.?\d*)$/
        );
        if (!match) {
          result.error =
            "Could not recognize a standard quadratic form. Use ax^2 + bx + c = 0 with explicit coefficients.";
          return result;
        }

        let aStr = match[1];
        let bStr = match[2];
        let cStr = match[3];

        if (aStr === "" || aStr === "+" || aStr === "-") {
          aStr = aStr === "-" ? "-1" : "1";
        }

        const a = parseFloat(aStr);
        const b = parseFloat(bStr);
        const c = parseFloat(cStr);

        if (!isFinite(a) || !isFinite(b) || !isFinite(c)) {
          result.error =
            "Could not parse the coefficients as numbers. Check your equation.";
          return result;
        }
        if (a === 0) {
          result.error =
            "The coefficient a must be nonzero for a quadratic equation.";
          return result;
        }

        result.steps.push(
          `Quadratic equation in standard form: ${a}x² + ${b}x + ${c} = 0`
        );
        const D = b * b - 4 * a * c;
        result.discriminant = D;
        result.steps.push(
          `Compute the discriminant: D = b² - 4ac = ${b}² - 4·${a}·${c} = ${D}`
        );

        if (D > 0) {
          const sqrtD = Math.sqrt(D);
          const x1 = (-b + sqrtD) / (2 * a);
          const x2 = (-b - sqrtD) / (2 * a);
          result.steps.push(`D > 0 → two distinct real roots.`);
          result.steps.push(
            `x₁ = (-b + √D) / (2a) = (${-b} + √${D}) / (2·${a}) = ${x1}`
          );
          result.steps.push(
            `x₂ = (-b - √D) / (2a) = (${-b} - √${D}) / (2·${a}) = ${x2}`
          );
          result.solution = x1;
          result.solution2 = x2;
        } else if (D === 0) {
          const x0 = -b / (2 * a);
          result.steps.push(`D = 0 → one repeated real root.`);
          result.steps.push(`x = -b / (2a) = ${-b} / (2·${a}) = ${x0}`);
          result.solution = x0;
        } else {
          const sqrtAbsD = Math.sqrt(-D);
          const realPart = -b / (2 * a);
          const imagPart = sqrtAbsD / (2 * a);
          result.steps.push(
            `D < 0 → no real roots; two complex conjugate roots.`
          );
          result.steps.push(
            `x = (-b ± i√|D|) / (2a) = (${-b} ± i√${-D}) / (2·${a})`
          );
          result.solution = `${realPart} + ${imagPart}i`;
          result.solution2 = `${realPart} - ${imagPart}i`;
        }

        return result;
      }

      // Numeric solver (Newton–Raphson)
      function solveNumeric(equation, initialGuess, tol) {
        const result = { steps: [], solution: null, error: null };
        let eq = equation.replace(/\s+/g, "");
        const parts = eq.split("=");
        let left = eq;
        let right = "0";
        if (parts.length === 2) {
          left = parts[0];
          right = parts[1];
        }

        const fLeft = buildFunctionFromString(left);
        const fRight = buildFunctionFromString(right);
        if (!fLeft || !fRight) {
          result.error =
            "Could not parse the equation for numeric solving. Check your functions and avoid programming syntax.";
          return result;
        }

        function f(x) {
          return fLeft(x) - fRight(x);
        }

        const maxIter = 50;
        const h = 1e-6;
        let x = initialGuess;
        result.steps.push(
          `Numeric solving for f(x) = 0 derived from: ${equation}`
        );
        result.steps.push(
          `Initial guess x₀ = ${initialGuess}, tolerance = ${tol}, max iterations = ${maxIter}`
        );

        for (let i = 0; i < maxIter; i++) {
          const fx = f(x);
          const dfx = (f(x + h) - f(x - h)) / (2 * h);
          if (!isFinite(fx) || !isFinite(dfx)) {
            result.error =
              "Function or derivative became non-finite during iteration. Try a different initial guess or check the equation.";
            return result;
          }
          if (Math.abs(dfx) < 1e-12) {
            result.error =
              "Derivative is too small near x = " +
              x +
              ". Newton–Raphson may fail to converge. Try a different initial guess.";
            return result;
          }
          const xNext = x - fx / dfx;
          result.steps.push(
            `Iteration ${
              i + 1
            }: x = ${x}, f(x) = ${fx}, f'(x) ≈ ${dfx}, next x = ${xNext}`
          );
          if (Math.abs(xNext - x) < tol) {
            result.steps.push(
              `Converged after ${i + 1} iterations: |xₙ₊₁ - xₙ| < tolerance.`
            );
            result.solution = xNext;
            return result;
          }
          x = xNext;
        }

        result.error =
          "Maximum number of iterations reached without convergence. Try a different initial guess or tolerance.";
        return result;
      }

      // Single equation solve button
      const solveEquationBtn = document.getElementById("solve-equation-btn");
      const clearEquationBtn = document.getElementById("clear-equation-btn");
      const equationInputEl = document.getElementById("equation-input");
      const equationModeEl = document.getElementById("equation-mode");
      const initialGuessEl = document.getElementById("initial-guess");
      const toleranceEl = document.getElementById("tolerance");
      const equationResultEl = document.getElementById("equation-result");

      function renderEquationResult(html) {
        if (equationResultEl) {
          equationResultEl.innerHTML = html;
        }
      }

      if (solveEquationBtn) {
        solveEquationBtn.addEventListener("click", () => {
          if (!equationInputEl || !equationModeEl) return;
          const eq = equationInputEl.value.trim();
          if (!eq) {
            renderEquationResult(
              '<p class="text-red-600">Please enter an equation to solve.</p>'
            );
            return;
          }

          const mode = equationModeEl.value;
          let html = "";

          function renderSteps(result, title) {
            if (result.error) {
              html += `<p class="text-red-600 mb-2">${result.error}</p>`;
            } else {
              html += `<p class="font-semibold mb-1">${title}</p>`;
              if (result.solution !== null && result.solution !== undefined) {
                if (
                  result.solution2 !== null &&
                  result.solution2 !== undefined
                ) {
                  html += `<p class="mb-1">Solutions:</p>`;
                  html += `<ul class="list-disc ml-5 mb-2">`;
                  html += `<li>x₁ = <span class="font-mono">${result.solution}</span></li>`;
                  html += `<li>x₂ = <span class="font-mono">${result.solution2}</span></li>`;
                  html += `</ul>`;
                } else {
                  html += `<p class="mb-2">Solution: <span class="font-mono">x = ${result.solution}</span></p>`;
                }
              }
              if (
                result.discriminant !== null &&
                result.discriminant !== undefined
              ) {
                html += `<p class="mb-2">Discriminant: <span class="font-mono">D = ${result.discriminant}</span></p>`;
              }
              if (Array.isArray(result.steps) && result.steps.length > 0) {
                html += `<details class="mt-2"><summary class="cursor-pointer text-blue-600 text-sm">Show steps</summary><ol class="list-decimal ml-5 mt-2 text-sm">`;
                result.steps.forEach((step) => {
                  html += `<li class="mb-1">${step}</li>`;
                });
                html += `</ol></details>`;
              }
            }
          }

          if (mode === "linear") {
            const res = solveLinearAnalytic(eq);
            renderSteps(res, "Linear equation solution");
          } else if (mode === "quadratic") {
            const res = solveQuadraticAnalytic(eq);
            renderSteps(res, "Quadratic equation solution");
          } else if (mode === "numeric") {
            const x0 = parseFloat(initialGuessEl ? initialGuessEl.value : "0");
            const tol = parseFloat(toleranceEl ? toleranceEl.value : "1e-7");
            if (!isFinite(x0) || !isFinite(tol) || tol <= 0) {
              renderEquationResult(
                '<p class="text-red-600">Please enter a valid initial guess and a positive tolerance.</p>'
              );
              return;
            }
            const res = solveNumeric(eq, x0, tol);
            renderSteps(res, "Numeric equation solution (Newton–Raphson)");
          } else {
            // Auto: try linear, then quadratic, then numeric
            const lin = solveLinearAnalytic(eq);
            if (!lin.error) {
              renderSteps(lin, "Linear equation solution (auto-detected)");
            } else {
              const quad = solveQuadraticAnalytic(eq);
              if (!quad.error) {
                renderSteps(
                  quad,
                  "Quadratic equation solution (auto-detected)"
                );
              } else {
                const x0 = parseFloat(
                  initialGuessEl ? initialGuessEl.value : "0"
                );
                const tol = parseFloat(
                  toleranceEl ? toleranceEl.value : "1e-7"
                );
                if (!isFinite(x0) || !isFinite(tol) || tol <= 0) {
                  renderEquationResult(
                    '<p class="text-red-600">Auto mode could not recognize a linear or quadratic pattern. For numeric solving, please enter a valid initial guess and tolerance.</p>'
                  );
                  return;
                }
                const num = solveNumeric(eq, x0, tol);
                renderSteps(num, "Numeric equation solution (auto fall-back)");
              }
            }
          }

          renderEquationResult(html);
        });
      }

      if (clearEquationBtn && equationResultEl && equationInputEl) {
        clearEquationBtn.addEventListener("click", () => {
          equationInputEl.value = "";
          equationResultEl.innerHTML =
            '<p class="text-gray-500">The solution and step-by-step explanation will appear here.</p>';
        });
      }

      // System solver (Gaussian elimination)
      const systemSizeEl = document.getElementById("system-size");
      const solveSystemBtn = document.getElementById("solve-system-btn");
      const clearSystemBtn = document.getElementById("clear-system-btn");
      const systemResultEl = document.getElementById("system-result");

      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isFinite(v) ? v : 0;
      }

      function gaussianElimination(A, b) {
        const n = A.length;
        const M = A.map((row, i) => row.concat(b[i]));
        const steps = [];

        function snapshot(stepLabel) {
          let s = stepLabel + ":\n";
          M.forEach((row) => {
            s +=
              "[ " +
              row
                .map((x) => (Math.abs(x) < 1e-12 ? 0 : x.toFixed(6)))
                .join(" , ") +
              " ]\n";
          });
          steps.push(s);
        }

        snapshot("Initial augmented matrix");

        for (let k = 0; k < n; k++) {
          // Partial pivoting
          let maxRow = k;
          for (let i = k + 1; i < n; i++) {
            if (Math.abs(M[i][k]) > Math.abs(M[maxRow][k])) {
              maxRow = i;
            }
          }
          if (Math.abs(M[maxRow][k]) < 1e-12) {
            return {
              error:
                "Matrix is singular or nearly singular. The system may have no unique solution.",
              steps,
            };
          }
          if (maxRow !== k) {
            const tmp = M[k];
            M[k] = M[maxRow];
            M[maxRow] = tmp;
            snapshot(`Swap row ${k + 1} with row ${maxRow + 1}`);
          }

          // Normalize pivot row
          const pivot = M[k][k];
          for (let j = k; j <= n; j++) {
            M[k][j] / pivot;
          }
          snapshot(`Normalize row ${k + 1}`);

          // Eliminate below
          for (let i = k + 1; i < n; i++) {
            const factor = M[i][k];
            for (let j = k; j <= n; j++) {
              M[i][j] -= factor * M[k][j];
            }
          }
          snapshot(`Eliminate entries below pivot in column ${k + 1}`);
        }

        // Back substitution
        const x = new Array(n).fill(0);
        for (let i = n - 1; i >= 0; i--) {
          let sum = M[i][n];
          for (let j = i + 1; j < n; j++) {
            sum -= M[i][j] * x[j];
          }
          x[i] = sum / M[i][i];
        }
        steps.push("Back substitution complete.");
        return { solution: x, steps };
      }

      function renderSystemResult(html) {
        if (systemResultEl) {
          systemResultEl.innerHTML = html;
        }
      }

      if (solveSystemBtn) {
        solveSystemBtn.addEventListener("click", () => {
          if (!systemSizeEl) return;
          const n = parseInt(systemSizeEl.value, 10) === 2 ? 2 : 3;

          const A = [];
          const b = [];

          if (n === 2) {
            A.push([getNumber("a11"), getNumber("a12")]);
            A.push([getNumber("a21"), getNumber("a22")]);
            b.push(getNumber("b1"));
            b.push(getNumber("b2"));
          } else {
            A.push([getNumber("a11"), getNumber("a12"), getNumber("a13")]);
            A.push([getNumber("a21"), getNumber("a22"), getNumber("a23")]);
            A.push([getNumber("a31"), getNumber("a32"), getNumber("a33")]);
            b.push(getNumber("b1"));
            b.push(getNumber("b2"));
            b.push(getNumber("b3"));
          }

          const res = gaussianElimination(A, b);
          let html = "";

          if (res.error) {
            html += `<p class="text-red-600 mb-2">${res.error}</p>`;
          }
          if (res.solution) {
            const vars = n === 2 ? ["x", "y"] : ["x", "y", "z"];
            html += `<p class="font-semibold mb-1">Solution:</p>`;
            html += `<ul class="list-disc ml-5 mb-2">`;
            res.solution.forEach((val, idx) => {
              html += `<li>${vars[idx]} = <span class="font-mono">${val}</span></li>`;
            });
            html += `</ul>`;
          }
          if (Array.isArray(res.steps) && res.steps.length > 0) {
            html += `<details class="mt-2"><summary class="cursor-pointer text-blue-600 text-sm">Show matrix steps</summary><pre class="mt-2 text-xs bg-white border border-gray-200 rounded p-2 overflow-x-auto">`;
            res.steps.forEach((s) => {
              html += s + "\n";
            });
            html += `</pre></details>`;
          }

          renderSystemResult(html);
        });
      }

      if (clearSystemBtn && systemResultEl) {
        clearSystemBtn.addEventListener("click", () => {
          [
            "a11",
            "a12",
            "a13",
            "a21",
            "a22",
            "a23",
            "a31",
            "a32",
            "a33",
            "b1",
            "b2",
            "b3",
          ].forEach((id) => {
            const el = document.getElementById(id);
            if (el) el.value = "";
          });
          systemResultEl.innerHTML =
            '<p class="text-gray-500">The solution and intermediate matrix steps will appear here.</p>';
        });
      }

      // Simple FAQ toggle
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            if (!answer) return;
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden", !isHidden);
            const icon = btn.querySelector("span:last-child");
            if (icon) icon.textContent = isHidden ? "−" : "+";
          });
        });
    </script>

