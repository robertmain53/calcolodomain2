                  if (dp > 0) {
                    relationSummary.push(
                      "A and B are parallel and point in broadly the same direction."
                    );
                  } else if (dp < 0) {
                    relationSummary.push(
                      "A and B are parallel but point in opposite directions (anti-parallel)."
                    );
                  } else {
                    relationSummary.push(
                      "A and B are (numerically) parallel, but at least one of them is very small."
                    );
                  }
                }
              } else {
                if (crossMag !== null && crossMag < epsCross) {
                  if (dp > 0) {
                    relationSummary.push(
                      "A and B are parallel and point in broadly the same direction."
                    );
                  } else if (dp < 0) {
                    relationSummary.push(
                      "A and B are parallel but point in opposite directions (anti-parallel)."
                    );
                  } else {
                    relationSummary.push(
                      "A and B are (numerically) parallel, but at least one of them is very small."
                    );
                  }
                }
              }

              if (relationSummary.length === 0) {
                relationSummary.push(
                  "A and B are neither parallel nor perpendicular at the chosen tolerance; they form a general angle in space."
                );
              }

              if (Math.abs(dp) < epsDot) {
                relationBadge.textContent = "Perpendicular";
                relationBadge.className =
                  "inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold badge-good";
              } else if (
                (!is2D && crossMag !== null && crossMag < epsCross) ||
                (is2D && Math.abs(ax * by - ay * bx) < epsCross)
              ) {
                relationBadge.textContent = "Parallel";
                relationBadge.className =
                  "inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold badge-good";
              } else {
                relationBadge.textContent = "General position";
                relationBadge.className =
                  "inline-flex items-center px-2.5 py-1 rounded-full text-xs font-semibold badge-neutral";
              }
            }

            // Fill outputs
            dimSpan.textContent = is2D ? "2D (x, y)" : "3D (x, y, z)";
            aDisplay.textContent = vecToString(A, dim);
            bDisplay.textContent = vecToString(B, dim);
            magASpan.textContent = fmt(magA);
            magBSpan.textContent = fmt(magB);
            dotSpan.textContent = fmt(dp);

            if (Number.isFinite(angleDeg)) {
              angleDegSpan.textContent = fmt(angleDeg) + " °";
              angleRadSpan.textContent = fmt(angleRad);
            } else {
              angleDegSpan.textContent = "– (undefined when a or b is zero)";
              angleRadSpan.textContent = "–";
            }

            sumSpan.textContent = vecToString(sum, dim);
            diffSpan.textContent = vecToString(diff, dim);

            if (projScalar !== null && projVec !== null) {
              projScalarSpan.textContent = fmt(projScalar);
              projVectorSpan.textContent = vecToString(projVec, dim);
            } else {
              projScalarSpan.textContent = "– (undefined when B is zero)";
              projVectorSpan.textContent = "–";
            }

            if (!is2D && cross && crossMag !== null) {
              crossSpan.textContent = vecToString(cross, 3);
              crossMagSpan.textContent = fmt(crossMag);
              crossBlock.classList.remove("hidden");
              crossMagBlock.classList.remove("hidden");
            }

            relationText.textContent = relationSummary.join(" ");

            resultsBlock.classList.remove("hidden");
          } catch (err) {
            errorSpan.textContent =
              err.message ||
              "An error occurred while computing vector operations.";
            errorSpan.classList.remove("hidden");
          }
        }

        function clearAll() {
          axInput.value = "";
          ayInput.value = "";
          azInput.value = "";
          bxInput.value = "";
          byInput.value = "";
          bzInput.value = "";
          clearOutputs();
        }

        function loadExample() {
          // Example: A = (3, 4, 0), B = (1, 2, 2) in 3D
          setMode("3d");
          axInput.value = "3";
          ayInput.value = "4";
          azInput.value = "0";
          bxInput.value = "1";
          byInput.value = "2";
          bzInput.value = "2";
          compute();
        }

        computeBtn.addEventListener("click", compute);
        clearBtn.addEventListener("click", clearAll);
        exampleBtn.addEventListener("click", loadExample);

        [axInput, ayInput, azInput, bxInput, byInput, bzInput].forEach(
          (input) => {
            input.addEventListener("keydown", function (e) {
              if (e.key === "Enter") {
                e.preventDefault();
                compute();
              }
            });
          }
        );

        // Default mode
        setMode("2d");
      });
    </script>
  
