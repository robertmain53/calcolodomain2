    <script>
      // Tab handling
      const tabSingle = document.getElementById("tab-single");
      const tabStream = document.getElementById("tab-stream");
      const panelSingle = document.getElementById("panel-single");
      const panelStream = document.getElementById("panel-stream");

      function activateTab(tab) {
        if (tab === "single") {
          tabSingle.className = "py-2 tab-active";
          tabStream.className = "py-2 tab-inactive";
          panelSingle.classList.remove("hidden");
          panelStream.classList.add("hidden");
        } else {
          tabSingle.className = "py-2 tab-inactive";
          tabStream.className = "py-2 tab-active";
          panelSingle.classList.add("hidden");
          panelStream.classList.remove("hidden");
        }
      }

      tabSingle.addEventListener("click", () => activateTab("single"));
      tabStream.addEventListener("click", () => activateTab("stream"));

      // Single cash flow calculator
      const pvModeSingle = document.getElementById("pv-mode-single");
      const compoundingSingle = document.getElementById("compounding-single");
      const fvSingle = document.getElementById("fv-single");
      const pvSingle = document.getElementById("pv-single");
      const rateSingle = document.getElementById("rate-single");
      const yearsSingle = document.getElementById("years-single");
      const btnCalcSingle = document.getElementById("btn-calc-single");
      const resultSingle = document.getElementById("result-single");
      const resultSingleLabel = document.getElementById("result-single-label");
      const resultSingleValue = document.getElementById("result-single-value");
      const resultSingleDetails = document.getElementById(
        "result-single-details"
      );
      const labelFvSingle = document.getElementById("label-fv-single");
      const labelPvSingle = document.getElementById("label-pv-single");

      function getPeriodsPerYear(mode) {
        switch (mode) {
          case "annual":
            return 1;
          case "semiannual":
            return 2;
          case "quarterly":
            return 4;
          case "monthly":
            return 12;
          case "weekly":
            return 52;
          case "daily":
            return 365;
          default:
            return 1;
        }
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "";
        const abs = Math.abs(value);
        const decimals = abs >= 1000 ? 2 : 2;
        return value.toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function updateSingleLabels() {
        if (pvModeSingle.value === "pv") {
          labelFvSingle.textContent = "Future value (FV)";
          labelPvSingle.textContent = "Present value (PV)";
          fvSingle.disabled = false;
          pvSingle.disabled = true;
          pvSingle.classList.add("bg-gray-50");
          fvSingle.classList.remove("bg-gray-50");
          pvSingle.placeholder = "Calculated";
        } else {
          labelFvSingle.textContent = "Future value (FV)";
          labelPvSingle.textContent = "Present value (PV)";
          fvSingle.disabled = true;
          pvSingle.disabled = false;
          fvSingle.classList.add("bg-gray-50");
          pvSingle.classList.remove("bg-gray-50");
          fvSingle.placeholder = "Calculated";
        }
      }

      pvModeSingle.addEventListener("change", updateSingleLabels);
      updateSingleLabels();

      btnCalcSingle.addEventListener("click", () => {
        const mode = pvModeSingle.value;
        const rAnnual = parseFloat(rateSingle.value) / 100;
        const years = parseFloat(yearsSingle.value);
        const comp = compoundingSingle.value;

        if (!isFinite(rAnnual) || !isFinite(years) || years < 0) {
          alert("Please enter a valid discount rate and time in years.");
          return;
        }

        const m = getPeriodsPerYear(comp);
        let n, rPeriod;

        if (comp === "continuous") {
          n = years;
          rPeriod = rAnnual; // used in exp
        } else {
          n = years * m;
          rPeriod = rAnnual / m;
        }

        let pv, fv;

        if (mode === "pv") {
          fv = parseFloat(fvSingle.value);
          if (!isFinite(fv)) {
            alert("Please enter a valid future value.");
            return;
          }
          if (comp === "continuous") {
            pv = fv * Math.exp(-rAnnual * years);
          } else {
            pv = fv / Math.pow(1 + rPeriod, n);
          }
          pvSingle.value = formatCurrency(pv);
          resultSingleLabel.textContent = "Present value (PV):";
          resultSingleValue.textContent = "$" + formatCurrency(pv);
        } else {
          pv = parseFloat(pvSingle.value);
          if (!isFinite(pv)) {
            alert("Please enter a valid present value.");
            return;
          }
          if (comp === "continuous") {
            fv = pv * Math.exp(rAnnual * years);
          } else {
            fv = pv * Math.pow(1 + rPeriod, n);
          }
          fvSingle.value = formatCurrency(fv);
          resultSingleLabel.textContent = "Future value (FV):";
          resultSingleValue.textContent = "$" + formatCurrency(fv);
        }

        let detail = "";
        if (comp === "continuous") {
          detail = `Continuous compounding at ${(rAnnual * 100).toFixed(
            4
          )}% for ${years.toFixed(2)} year(s).`;
        } else {
          detail = `${m}× compounding per year: ${n.toFixed(
            2
          )} total period(s) at ${(rPeriod * 100).toFixed(4)}% per period.`;
        }
        resultSingleDetails.textContent = detail;
        resultSingle.classList.remove("hidden");
      });

      // Cash flow stream calculator
      const rateStream = document.getElementById("rate-stream");
      const compoundingStream = document.getElementById("compounding-stream");
      const cfTbody = document.getElementById("cf-tbody");
      const btnAddRow = document.getElementById("btn-add-row");
      const btnClearRows = document.getElementById("btn-clear-rows");
      const btnCalcStream = document.getElementById("btn-calc-stream");
      const resultStream = document.getElementById("result-stream");
      const resultStreamValue = document.getElementById("result-stream-value");

      function createRow(period) {
        const tr = document.createElement("tr");
        tr.innerHTML = `
      <td class="px-2 py-1 text-gray-700">
        <input type="number" class="w-full border border-gray-200 rounded px-1 py-1 text-xs md:text-sm text-center cf-period" value="${period}">
      </td>
      <td class="px-2 py-1">
        <input type="number" step="any" class="w-full border border-gray-200 rounded px-1 py-1 text-xs md:text-sm cf-amount" placeholder="e.g. 1000">
      </td>
      <td class="px-2 py-1 text-gray-700 text-xs md:text-sm cf-factor">–</td>
      <td class="px-2 py-1 text-gray-700 text-xs md:text-sm cf-pv">–</td>
      <td class="px-2 py-1 text-center">
        <button type="button" class="text-red-500 hover:text-red-700 text-xs remove-row">&times;</button>
      </td>
    `;
        return tr;
      }

      function initRows() {
        cfTbody.innerHTML = "";
        for (let t = 0; t <= 4; t++) {
          cfTbody.appendChild(createRow(t));
        }
      }

      initRows();

      btnAddRow.addEventListener("click", () => {
        let maxPeriod = 0;
        cfTbody.querySelectorAll(".cf-period").forEach((input) => {
          const v = parseInt(input.value, 10);
          if (isFinite(v) && v > maxPeriod) maxPeriod = v;
        });
        cfTbody.appendChild(createRow(maxPeriod + 1));
      });

      btnClearRows.addEventListener("click", () => {
        if (confirm("Clear all cash flow rows?")) {
          initRows();
          resultStream.classList.add("hidden");
        }
      });

      cfTbody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-row")) {
          const row = e.target.closest("tr");
          row.parentNode.removeChild(row);
        }
      });

      btnCalcStream.addEventListener("click", () => {
        const rAnnual = parseFloat(rateStream.value) / 100;
        if (!isFinite(rAnnual)) {
          alert("Please enter a valid annual discount rate.");
          return;
        }
        const comp = compoundingStream.value;
        const m = getPeriodsPerYear(comp);
        const rPeriod = rAnnual / m;

        let totalPV = 0;
        const rows = Array.from(cfTbody.querySelectorAll("tr"));

        if (rows.length === 0) {
          alert("Please add at least one cash flow row.");
          return;
        }

        rows.forEach((row) => {
          const periodInput = row.querySelector(".cf-period");
          const amountInput = row.querySelector(".cf-amount");
          const factorCell = row.querySelector(".cf-factor");
          const pvCell = row.querySelector(".cf-pv");

          const t = parseFloat(periodInput.value);
          const cf = parseFloat(amountInput.value);

          if (!isFinite(t) || !isFinite(cf)) {
            factorCell.textContent = "–";
            pvCell.textContent = "–";
            return;
          }

          const n = t; // t is in periods already
          const factor = 1 / Math.pow(1 + rPeriod, n);
          const pv = cf * factor;

          totalPV += pv;
          factorCell.textContent = factor.toFixed(6);
          pvCell.textContent = formatCurrency(pv);
        });

        resultStreamValue.textContent = "$" + formatCurrency(totalPV);
        resultStream.classList.remove("hidden");
      });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((icon) => (icon.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              btn.querySelector("span:last-child").textContent = "−";
            }
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
