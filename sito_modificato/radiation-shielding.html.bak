    <script>
      // Material and energy dependent attenuation data (approximate)
      // Values: mu in 1/cm for given material and energy (MeV)
      const materialData = {
        lead: {
          name: "Lead",
          densities: 11.34,
          energies: {
            0.1: 5.0,
            0.5: 1.6,
            0.662: 1.25,
            1.25: 0.7,
            2: 0.5,
          },
        },
        concrete: {
          name: "Concrete",
          densities: 2.3,
          energies: {
            0.1: 0.35,
            0.5: 0.1,
            0.662: 0.08,
            1.25: 0.07,
            2: 0.06,
          },
        },
        steel: {
          name: "Steel",
          densities: 7.8,
          energies: {
            0.1: 1.2,
            0.5: 0.7,
            0.662: 0.55,
            1.25: 0.45,
            2: 0.35,
          },
        },
        water: {
          name: "Water",
          densities: 1.0,
          energies: {
            0.1: 0.17,
            0.5: 0.09,
            0.662: 0.07,
            1.25: 0.06,
            2: 0.05,
          },
        },
      };

      function getSelectedMode() {
        const radios = document.querySelectorAll('input[name="mode"]');
        for (const r of radios) {
          if (r.checked) return r.value;
        }
        return "thickness";
      }

      function updateModeVisibility() {
        const mode = getSelectedMode();
        const thicknessGroup = document.getElementById("thickness-input-group");
        const targetGroup = document.getElementById("target-dose-group");
        if (mode === "thickness") {
          thicknessGroup.classList.remove("hidden");
          targetGroup.classList.add("hidden");
        } else {
          thicknessGroup.classList.remove("hidden");
          targetGroup.classList.remove("hidden");
        }
      }

      function updateMaterialVisibility() {
        const material = document.getElementById("material-select").value;
        const energyContainer = document.getElementById("energy-container");
        const customParams = document.getElementById("custom-params");
        if (material === "custom") {
          customParams.classList.remove("hidden");
          energyContainer.classList.add("hidden");
        } else {
          customParams.classList.add("hidden");
          energyContainer.classList.remove("hidden");
        }
      }

      function formatNumber(value, decimals = 3) {
        if (!isFinite(value)) return "–";
        if (Math.abs(value) === 0) return "0";
        if (Math.abs(value) >= 0.01 && Math.abs(value) < 1e4) {
          return value.toFixed(decimals).replace(/\.?0+$/, "");
        }
        return value.toExponential(2);
      }

      function calculate() {
        const incidentInput = document.getElementById("incident-dose");
        const incidentUnitSel = document.getElementById("incident-dose-unit");
        const materialSel = document.getElementById("material-select");
        const energySel = document.getElementById("energy-select");
        const thicknessInput = document.getElementById("thickness");
        const thicknessUnitSel = document.getElementById("thickness-unit");
        const targetDoseInput = document.getElementById("target-dose");
        const targetDoseUnitSel = document.getElementById("target-dose-unit");
        const buildUpInput = document.getElementById("build-up-factor");
        const customMuInput = document.getElementById("custom-mu");
        const customMuUnitSel = document.getElementById("custom-mu-unit");
        const customHvlInput = document.getElementById("custom-hvl");
        const customHvlUnitSel = document.getElementById("custom-hvl-unit");

        const mode = getSelectedMode();

        let I0 = parseFloat(incidentInput.value);
        const incidentUnitFactor = incidentUnitSel.value;

        if (!isFinite(I0) || I0 <= 0) {
          alert("Please enter a positive incident dose or intensity.");
          return;
        }

        // Normalize incident to arbitrary base unit unless "relative"
        let relativeMode = false;
        if (incidentUnitFactor === "1dose") {
          relativeMode = true;
          I0 = 1;
        } else {
          const factor = parseFloat(incidentUnitFactor);
          I0 = I0 * factor; // convert to base unit
        }

        const material = materialSel.value;
        let mu; // 1/cm

        if (material === "custom") {
          const muVal = parseFloat(customMuInput.value);
          const hvlVal = parseFloat(customHvlInput.value);
          if (isFinite(muVal) && muVal > 0) {
            const muFactor = parseFloat(customMuUnitSel.value); // 1/cm or 1/mm
            mu = muVal * muFactor;
          } else if (isFinite(hvlVal) && hvlVal > 0) {
            let hvlCm = hvlVal;
            if (customHvlUnitSel.value === "mm") {
              hvlCm = hvlVal / 10.0;
            }
            mu = Math.log(2) / hvlCm;
          } else {
            alert("For custom material, please enter either μ or HVL.");
            return;
          }
        } else {
          const energy = energySel.value;
          const matData = materialData[material];
          if (!matData || !matData.energies[energy]) {
            alert(
              "No attenuation data available for this material/energy combination."
            );
            return;
          }
          mu = matData.energies[energy];
        }

        if (!isFinite(mu) || mu <= 0) {
          alert("Invalid attenuation coefficient μ.");
          return;
        }

        const hvl = Math.log(2) / mu;
        const tvl = Math.log(10) / mu;

        let xCm; // thickness in cm
        let I; // transmitted intensity
        let targetI; // target intensity if mode = dose

        const buildUp = parseFloat(buildUpInput.value);
        const B = isFinite(buildUp) && buildUp > 0 ? buildUp : 1.0;

        if (mode === "thickness") {
          const xVal = parseFloat(thicknessInput.value);
          if (!isFinite(xVal) || xVal < 0) {
            alert("Please enter a non-negative shield thickness.");
            return;
          }
          xCm = thicknessUnitSel.value === "mm" ? xVal / 10.0 : xVal;
          I = I0 * Math.exp(-mu * xCm) * B;
        } else {
          // mode = dose
          const targetVal = parseFloat(targetDoseInput.value);
          if (!isFinite(targetVal) || targetVal <= 0) {
            alert("Please enter a positive target dose or intensity.");
            return;
          }

          if (targetDoseUnitSel.value === "percent") {
            const frac = targetVal / 100.0;
            targetI = I0 * frac;
          } else {
            // same unit as incident
            if (relativeMode) {
              targetI = targetVal; // relative
            } else {
              const factor = parseFloat(incidentUnitFactor);
              targetI = targetVal * factor;
            }
          }

          // Solve I = B * I0 * e^{-μx} => x = -ln(I / (B I0)) / μ
          const ratio = targetI / (B * I0);
          if (ratio <= 0) {
            alert(
              "Target dose too small relative to incident and build-up factor."
            );
            return;
          }
          xCm = -Math.log(ratio) / mu;
          if (!isFinite(xCm) || xCm < 0) {
            alert(
              "Could not compute a valid thickness for the specified target dose."
            );
            return;
          }
          I = targetI; // by construction
        }

        const nHVL = xCm / hvl;
        const nTVL = xCm / tvl;
        const transmission = I / I0;
        const percentTransmission = transmission * 100;
        const percentAttenuation = (1 - transmission) * 100;

        // Update results
        document.getElementById("result-mu").textContent = formatNumber(mu, 3);
        document.getElementById("result-hvl").textContent = formatNumber(
          hvl,
          3
        );
        document.getElementById("result-tvl").textContent = formatNumber(
          tvl,
          3
        );

        let thicknessLabel;
        if (xCm < 1) {
          thicknessLabel = formatNumber(xCm * 10, 3) + " mm";
        } else {
          thicknessLabel = formatNumber(xCm, 3) + " cm";
        }
        document.getElementById("result-thickness").textContent =
          thicknessLabel;
        document.getElementById("result-n-hvl").textContent = formatNumber(
          nHVL,
          3
        );
        document.getElementById("result-n-tvl").textContent = formatNumber(
          nTVL,
          3
        );

        let doseLabel;
        if (relativeMode) {
          doseLabel = formatNumber(I, 4) + " (relative units)";
        } else {
          // convert back to original unit
          const factor = parseFloat(incidentUnitFactor);
          const I_display = I / factor;
          const unitText =
            incidentUnitSel.options[incidentUnitSel.selectedIndex].text;
          doseLabel = formatNumber(I_display, 4) + " " + unitText;
        }
        document.getElementById("result-dose").textContent = doseLabel;
        document.getElementById("result-percent").textContent =
          formatNumber(percentTransmission, 2) + " %";
        document.getElementById("result-attenuation").textContent =
          formatNumber(percentAttenuation, 2) + " %";

        const badge = document.getElementById("result-safety-badge");
        badge.classList.remove(
          "hidden",
          "badge-green",
          "badge-yellow",
          "badge-red"
        );
        if (percentAttenuation >= 99.9) {
          badge.textContent = "Very strong attenuation";
          badge.classList.add("badge-green");
        } else if (percentAttenuation >= 90) {
          badge.textContent = "High attenuation";
          badge.classList.add("badge-yellow");
        } else {
          badge.textContent = "Low attenuation";
          badge.classList.add("badge-red");
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("material-select")
          .addEventListener("change", updateMaterialVisibility);
        document.querySelectorAll('input[name="mode"]').forEach((r) => {
          r.addEventListener("change", updateModeVisibility);
        });
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculate);

        updateMaterialVisibility();
        updateModeVisibility();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
