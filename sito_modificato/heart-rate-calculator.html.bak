    <script>
      // Heart rate calculator logic
      function getSelectedRadio(name) {
        const el = document.querySelector('input[name="' + name + '"]:checked');
        return el ? el.value : null;
      }

      function round(value) {
        return Math.round(value);
      }

      function computeMaxHR(age, sex, formula) {
        const fox = 220 - age;
        const tanaka = 208 - 0.7 * age;
        const nes = 211 - 0.64 * age;
        const gulati = 206 - 0.88 * age;

        switch (formula) {
          case "fox":
            return fox;
          case "tanaka":
            return tanaka;
          case "nes":
            return nes;
          case "gulati":
            // Gulati validated for women; if not female, fall back to Tanaka
            return sex === "female" ? gulati : tanaka;
          case "average":
            const vals = [fox, tanaka, nes];
            if (sex === "female") vals.push(gulati);
            return vals.reduce((a, b) => a + b, 0) / vals.length;
          default:
            return tanaka;
        }
      }

      function getZoneDefinitions(set) {
        if (set === "polar") {
          return [
            { name: "Zone 1", label: "Very light", min: 50, max: 60 },
            { name: "Zone 2", label: "Light", min: 60, max: 70 },
            { name: "Zone 3", label: "Moderate", min: 70, max: 80 },
            { name: "Zone 4", label: "Hard", min: 80, max: 90 },
            { name: "Zone 5", label: "Max", min: 90, max: 100 },
          ];
        }
        if (set === "custom") {
          return [
            {
              name: "Zone 1",
              label: "Custom",
              min: Number(document.getElementById("z1-min").value) || 0,
              max: Number(document.getElementById("z1-max").value) || 0,
            },
            {
              name: "Zone 2",
              label: "Custom",
              min: Number(document.getElementById("z2-min").value) || 0,
              max: Number(document.getElementById("z2-max").value) || 0,
            },
            {
              name: "Zone 3",
              label: "Custom",
              min: Number(document.getElementById("z3-min").value) || 0,
              max: Number(document.getElementById("z3-max").value) || 0,
            },
            {
              name: "Zone 4",
              label: "Custom",
              min: Number(document.getElementById("z4-min").value) || 0,
              max: Number(document.getElementById("z4-max").value) || 0,
            },
            {
              name: "Zone 5",
              label: "Custom",
              min: Number(document.getElementById("z5-min").value) || 0,
              max: Number(document.getElementById("z5-max").value) || 0,
            },
          ];
        }
        // standard
        return [
          { name: "Zone 1", label: "Very easy / recovery", min: 50, max: 60 },
          { name: "Zone 2", label: "Easy aerobic", min: 60, max: 70 },
          { name: "Zone 3", label: "Moderate / tempo", min: 70, max: 80 },
          { name: "Zone 4", label: "Hard / threshold", min: 80, max: 90 },
          { name: "Zone 5", label: "Very hard / VO2 max", min: 90, max: 100 },
        ];
      }

      function describeIntensity(zoneName) {
        switch (zoneName) {
          case "Zone 1":
            return "Very easy, recovery, warm‑up and cool‑down.";
          case "Zone 2":
            return "Easy aerobic, build endurance and fat oxidation.";
          case "Zone 3":
            return "Moderate, tempo efforts and steady runs.";
          case "Zone 4":
            return "Hard intervals near lactate threshold.";
          case "Zone 5":
            return "Very hard, short maximal efforts.";
          default:
            return "";
        }
      }

      function updateCustomZonesVisibility() {
        const zoneSet = document.getElementById("zone-set").value;
        const wrapper = document.getElementById("custom-zones-wrapper");
        if (zoneSet === "custom") {
          wrapper.classList.remove("hidden");
        } else {
          wrapper.classList.add("hidden");
        }
      }

      document
        .getElementById("zone-set")
        .addEventListener("change", updateCustomZonesVisibility);

      document
        .getElementById("calculate-btn")
        .addEventListener("click", function () {
          const errorEl = document.getElementById("error-msg");
          errorEl.textContent = "";

          const age = Number(document.getElementById("age").value);
          if (!age || age < 5 || age > 100) {
            errorEl.textContent = "Please enter a valid age between 5 and 100.";
            return;
          }

          const sex = getSelectedRadio("sex") || "other";
          const formula = document.getElementById("max-hr-formula").value;
          let resting = document.getElementById("resting-hr").value.trim();
          resting = resting === "" ? null : Number(resting);

          if (resting !== null && (resting < 30 || resting > 130)) {
            errorEl.textContent =
              "Please enter a realistic resting heart rate between 30 and 130 bpm, or leave it blank.";
            return;
          }

          const zoneMethod = getSelectedRadio("zone-method") || "percent-max";
          if (zoneMethod === "karvonen" && resting === null) {
            errorEl.textContent =
              "Karvonen method requires a resting heart rate. Please enter resting HR or choose % of max HR.";
            return;
          }

          const maxHR = computeMaxHR(age, sex, formula);
          const maxHRrounded = round(maxHR);

          const maxDisplay = document.getElementById("max-hr-display");
          const maxDetail = document.getElementById("max-hr-detail");
          maxDisplay.textContent = maxHRrounded + " bpm";

          let formulaName = "";
          switch (formula) {
            case "fox":
              formulaName = "Fox (220 − age)";
              break;
            case "tanaka":
              formulaName = "Tanaka (208 − 0.7 × age)";
              break;
            case "gulati":
              formulaName =
                sex === "female"
                  ? "Gulati (women)"
                  : "Gulati (fallback to Tanaka for non‑female)";
              break;
            case "nes":
              formulaName = "Nes (211 − 0.64 × age)";
              break;
            case "average":
              formulaName = "Average of selected formulas";
              break;
          }
          maxDetail.textContent = "Based on " + formulaName + ".";

          const restingDisplay = document.getElementById("resting-hr-display");
          const hrrDisplay = document.getElementById("hrr-display");

          if (resting === null) {
            restingDisplay.textContent = "Not set";
            hrrDisplay.textContent = "–";
          } else {
            restingDisplay.textContent = round(resting) + " bpm";
            const hrr = maxHR - resting;
            hrrDisplay.textContent = round(hrr) + " bpm";
          }

          const zoneSet = document.getElementById("zone-set").value;
          const zones = getZoneDefinitions(zoneSet);
          const tbody = document.getElementById("zones-table-body");
          tbody.innerHTML = "";

          zones.forEach((zone, index) => {
            const minFrac = zone.min / 100;
            const maxFrac = zone.max / 100;

            let minHR, maxHRzone;
            if (zoneMethod === "percent-max" || resting === null) {
              minHR = maxHR * minFrac;
              maxHRzone = maxHR * maxFrac;
            } else {
              const hrr = maxHR - resting;
              minHR = resting + hrr * minFrac;
              maxHRzone = resting + hrr * maxFrac;
            }

            const tr = document.createElement("tr");
            if (index % 2 === 1) tr.classList.add("bg-gray-50");

            const colorClasses = [
              "bg-green-400",
              "bg-blue-400",
              "bg-yellow-400",
              "bg-orange-400",
              "bg-red-500",
            ];
            const color = colorClasses[index] || "bg-gray-400";

            tr.innerHTML = `
        <td class="px-3 py-2 align-top">
          <div class="flex items-center gap-2">
            <span class="inline-flex items-center justify-center w-6 h-6 rounded-full text-xs font-semibold text-white ${color}">
              Z${index + 1}
            </span>
            <div>
              <div class="font-semibold">${zone.name}</div>
              <div class="text-xs text-gray-500">${zone.label}</div>
            </div>
          </div>
        </td>
        <td class="px-3 py-2 align-top">
          ${zone.min}&ndash;${zone.max}% ${
              zoneMethod === "karvonen" ? "HRR" : "max HR"
            }
        </td>
        <td class="px-3 py-2 align-top">
          ${round(minHR)}&ndash;${round(maxHRzone)} bpm
          <div class="mt-1 w-24 md:w-32 bg-gray-200 zone-bar overflow-hidden">
            <div class="${color} h-full" style="width:${
              zone.max - zone.min
            }%;"></div>
          </div>
        </td>
        <td class="px-3 py-2 align-top text-gray-700">
          ${describeIntensity(zone.name)}
        </td>
      `;
            tbody.appendChild(tr);
          });
        });

      document
        .getElementById("reset-btn")
        .addEventListener("click", function () {
          document.getElementById("age").value = 35;
          document.querySelector(
            'input[name="sex"][value="female"]'
          ).checked = true;
          document.getElementById("resting-hr").value = "";
          document.getElementById("max-hr-formula").value = "fox";
          document.querySelector(
            'input[name="zone-method"][value="percent-max"]'
          ).checked = true;
          document.getElementById("zone-set").value = "standard";
          updateCustomZonesVisibility();
          document.getElementById("error-msg").textContent = "";

          document.getElementById("max-hr-display").textContent = "–";
          document.getElementById("max-hr-detail").textContent =
            "Select a formula and calculate.";
          document.getElementById("resting-hr-display").textContent = "–";
          document.getElementById("hrr-display").textContent = "–";
          document.getElementById("zones-table-body").innerHTML = "";
        });

      // FAQ toggle (simple, in addition to global script_faq if present)
      document.querySelectorAll(".faq-question").forEach((btn) => {
        btn.addEventListener("click", () => {
          const answer = btn.nextElementSibling;
          const isHidden = answer.classList.contains("hidden");
          document
            .querySelectorAll(".faq-answer")
            .forEach((a) => a.classList.add("hidden"));
          document
            .querySelectorAll(".faq-question span:last-child")
            .forEach((icon) => (icon.textContent = "+"));
          if (isHidden) {
            answer.classList.remove("hidden");
            btn.querySelector("span:last-child").textContent = "−";
          }
        });
      });
    </script>

