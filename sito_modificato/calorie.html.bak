    <script>
      // Unit system toggle
      const btnMetric = document.getElementById("btn-metric");
      const btnImperial = document.getElementById("btn-imperial");
      const weightInput = document.getElementById("weight");
      const weightUnitSpan = document.getElementById("weight-unit");
      const heightMetricGroup = document.getElementById("height-metric-group");
      const heightImperialGroup = document.getElementById(
        "height-imperial-group"
      );

      let currentUnit = "metric"; // 'metric' or 'imperial'

      function setMetric() {
        currentUnit = "metric";
        btnMetric.classList.add("bg-blue-600", "text-white");
        btnMetric.classList.remove("bg-white", "text-gray-700");
        btnImperial.classList.remove("bg-blue-600", "text-white");
        btnImperial.classList.add("bg-white", "text-gray-700");
        weightUnitSpan.textContent = "kg";
        heightMetricGroup.classList.remove("hidden");
        heightImperialGroup.classList.add("hidden");
      }

      function setImperial() {
        currentUnit = "imperial";
        btnImperial.classList.add("bg-blue-600", "text-white");
        btnImperial.classList.remove("bg-white", "text-gray-700");
        btnMetric.classList.remove("bg-blue-600", "text-white");
        btnMetric.classList.add("bg-white", "text-gray-700");
        weightUnitSpan.textContent = "lb";
        heightMetricGroup.classList.add("hidden");
        heightImperialGroup.classList.remove("hidden");
      }

      btnMetric.addEventListener("click", setMetric);
      btnImperial.addEventListener("click", setImperial);

      // Goal rate visibility
      const goalSelect = document.getElementById("goal");
      const goalRateGroup = document.getElementById("goal-rate-group");

      function updateGoalRateVisibility() {
        if (goalSelect.value === "maintain") {
          goalRateGroup.classList.add("hidden");
        } else {
          goalRateGroup.classList.remove("hidden");
        }
      }
      goalSelect.addEventListener("change", updateGoalRateVisibility);
      updateGoalRateVisibility();

      // Main calculation
      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorEl = document.getElementById("form-error");

      const bmrEl = document.getElementById("bmr-value");
      const tdeeEl = document.getElementById("tdee-value");
      const calMinEl = document.getElementById("calorie-min");
      const calMaxEl = document.getElementById("calorie-max");
      const goalDescEl = document.getElementById("goal-description");
      const timeToGoalEl = document.getElementById("time-to-goal");

      function parseNumber(id) {
        const v = document.getElementById(id).value;
        return v === "" ? NaN : parseFloat(v);
      }

      function calculateCalories() {
        errorEl.classList.add("hidden");

        const gender = document.getElementById("gender").value;
        const age = parseNumber("age");
        let weight = parseNumber("weight");
        let heightCm;

        if (currentUnit === "metric") {
          heightCm = parseNumber("height-cm");
        } else {
          const ft = parseNumber("height-ft");
          const inch = parseNumber("height-in");
          if (!isNaN(ft) && !isNaN(inch)) {
            const totalIn = ft * 12 + inch;
            heightCm = totalIn * 2.54;
          } else {
            heightCm = NaN;
          }
          // convert lb to kg
          if (!isNaN(weight)) {
            weight = weight * 0.45359237;
          }
        }

        const activity = parseFloat(document.getElementById("activity").value);
        const goal = goalSelect.value;
        const goalRate = parseNumber("goal-rate");

        if (
          isNaN(age) ||
          isNaN(weight) ||
          isNaN(heightCm) ||
          age <= 0 ||
          weight <= 0 ||
          heightCm <= 0
        ) {
          errorEl.textContent =
            "Enter valid values for age, weight, and height.";
          errorEl.classList.remove("hidden");
          return;
        }

        // Mifflin-St Jeor
        let bmr;
        if (gender === "male") {
          bmr = 10 * weight + 6.25 * heightCm - 5 * age + 5;
        } else {
          bmr = 10 * weight + 6.25 * heightCm - 5 * age - 161;
        }

        const tdee = bmr * activity;

        // Round
        const bmrRounded = Math.round(bmr);
        const tdeeRounded = Math.round(tdee);

        bmrEl.textContent = bmrRounded.toLocaleString("it-IT");
        tdeeEl.textContent = tdeeRounded.toLocaleString("it-IT");

        let calMin = tdee;
        let calMax = tdee;
        let desc = "";
        let timeText = "";

        if (goal === "maintain") {
          calMin = tdee - 50;
          calMax = tdee + 50;
          desc =
            "Maintenance range for body weight, accounting for small day-to-day variations.";
        } else {
          if (isNaN(goalRate) || goalRate <= 0) {
            errorEl.textContent =
              "Enter a valid target rate (kg/week).";
            errorEl.classList.remove("hidden");
            return;
          }
          // 1 kg ≈ 7700 kcal
          const weeklyKcal = goalRate * 7700;
          const dailyKcal = weeklyKcal / 7;

          if (goal === "loss") {
            const deficit = dailyKcal;
            calMin = tdee - deficit - 100;
            calMax = tdee - deficit + 100;
            desc = `Deficit di circa ${Math.round(
              deficit
            )} kcal/giorno per una perdita di ~${goalRate.toFixed(
              2
            )} kg/settimana.`;
          } else if (goal === "gain") {
            const surplus = dailyKcal;
            calMin = tdee + surplus - 100;
            calMax = tdee + surplus + 100;
            desc = `Surplus di circa ${Math.round(
              surplus
            )} kcal/giorno per un aumento di ~${goalRate.toFixed(
              2
            )} kg/settimana.`;
          }

          // Safety floors
          const minSafe = gender === "male" ? 1400 : 1200;
          if (goal === "loss" && calMin < minSafe) {
            calMin = minSafe;
            desc +=
              " Note: the minimum value was raised to avoid dropping below an intake generally considered safe.";
          }
        }

        calMin = Math.round(calMin);
        calMax = Math.round(calMax);

        calMinEl.textContent = calMin.toLocaleString("it-IT");
        calMaxEl.textContent = calMax.toLocaleString("it-IT");
        goalDescEl.textContent = desc;

        // Time to goal is optional: we would need a target weight; here we just give a generic note
        if (goal === "maintain") {
          timeText =
            "For maintenance there is no target time: monitor weight and adjust by +/-100-150 kcal if needed.";
        } else {
          timeText =
            "Note: the time needed to reach your goal depends on the weight to lose/gain and adherence to the plan.";
        }
        timeToGoalEl.textContent = timeText;
      }

      calculateBtn.addEventListener("click", calculateCalories);

      resetBtn.addEventListener("click", () => {
        document.getElementById("gender").value = "male";
        document.getElementById("age").value = 30;
        document.getElementById("weight").value = 70;
        document.getElementById("height-cm").value = 175;
        document.getElementById("height-ft").value = 5;
        document.getElementById("height-in").value = 9;
        document.getElementById("activity").value = "1.2";
        goalSelect.value = "maintain";
        document.getElementById("goal-rate").value = 0.5;
        updateGoalRateVisibility();
        setMetric();
        bmrEl.textContent = "–";
        tdeeEl.textContent = "–";
        calMinEl.textContent = "–";
        calMaxEl.textContent = "–";
        goalDescEl.textContent =
          "Imposta l’obiettivo e clicca su “Calculate calories” per vedere l’intervallo consigliato.";
        timeToGoalEl.textContent = "";
        errorEl.classList.add("hidden");
      });

      // Initialize defaults
      setMetric();
    </script>

