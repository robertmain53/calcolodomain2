            els.coveragePerUnitUnit.textContent = "units/m²";
            els.bedAreaUnit.textContent = "m²";
            els.bedThicknessUnit.textContent = "cm";
            els.bagWeightUnit.textContent = "kg";
            els.yieldPerBagUnit.textContent = "m³/bag";

            if (!els.unitLength.value) els.unitLength.value = 19;
            if (!els.unitHeight.value) els.unitHeight.value = 5.7;
            if (!els.jointThickness.value) els.jointThickness.value = 1;
            if (!els.yieldPerBag.value) els.yieldPerBag.value = 0.02;
          }

          recalc();
        }

        function setMode(mode) {
          state.mode = mode;
          els.modeBtns.forEach((btn) => {
            if (btn.dataset.mode === mode) {
              btn.classList.add(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700",
                "font-medium"
              );
              btn.classList.remove("border-gray-300", "text-gray-700");
            } else {
              btn.classList.remove(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700",
                "font-medium"
              );
              btn.classList.add("border-gray-300", "text-gray-700");
            }
          });

          if (mode === "brick") {
            els.sectionBrick.classList.remove("hidden");
            els.sectionBed.classList.add("hidden");
          } else {
            els.sectionBed.classList.remove("hidden");
            els.sectionBrick.classList.add("hidden");
          }

          recalc();
        }

        function parseNum(el) {
          const v = parseFloat(el.value);
          return isNaN(v) ? 0 : v;
        }

        function calcWallArea() {
          const L = parseNum(els.wallLength);
          const H = parseNum(els.wallHeight);
          if (L <= 0 || H <= 0) {
            els.wallArea.value = "";
            return 0;
          }
          const area = L * H;
          const unit = state.unitSystem === "imperial" ? "ft²" : "m²";
          els.wallArea.value = area.toFixed(2) + " " + unit;
          return area;
        }

        function calcCoverageAndUnits(area) {
          const ul = parseNum(els.unitLength);
          const uh = parseNum(els.unitHeight);
          const jt = parseNum(els.jointThickness);

          if (ul <= 0 || uh <= 0) {
            els.coveragePerUnit.value = "";
            els.estimatedUnits.value = "";
            return 0;
          }

          let unitAreaWall = 0;
          if (state.unitSystem === "imperial") {
            const totalL = ul + jt; // inches
            const totalH = uh + jt; // inches
            unitAreaWall = (totalL / 12) * (totalH / 12); // ft²
            if (unitAreaWall > 0) {
              const cov = 1 / unitAreaWall;
              els.coveragePerUnit.value = cov.toFixed(2);
            }
          } else {
            const totalL = ul + jt; // cm
            const totalH = uh + jt; // cm
            unitAreaWall = (totalL / 100) * (totalH / 100); // m²
            if (unitAreaWall > 0) {
              const cov = 1 / unitAreaWall;
              els.coveragePerUnit.value = cov.toFixed(2);
            }
          }

          const covUser = parseNum(els.coveragePerUnit);
          if (area > 0 && covUser > 0) {
            const units = area * covUser;
            els.estimatedUnits.value = units.toFixed(0) + " units";
            return units;
          } else {
            els.estimatedUnits.value = "";
            return 0;
          }
        }

        function calcBedVolume() {
          const A = parseNum(els.bedArea);
          const t = parseNum(els.bedThickness);
          if (A <= 0 || t <= 0) {
            els.bedVolume.value = "";
            return 0;
          }
          let vol;
          if (state.unitSystem === "imperial") {
            vol = A * (t / 12); // ft³
            els.bedVolume.value = vol.toFixed(2) + " ft³";
          } else {
            vol = A * (t / 100); // m³
            els.bedVolume.value = vol.toFixed(3) + " m³";
          }
          return vol;
        }

        function calcMortarVolume() {
          if (state.mode === "brick") {
            const area = calcWallArea();
            calcCoverageAndUnits(area);
            const jt = parseNum(els.jointThickness);
            const pct = parseNum(els.mortarPercent) / 100;
            if (area <= 0 || jt <= 0 || pct <= 0) return 0;

            if (state.unitSystem === "imperial") {
              const jtFt = jt / 12;
              return area * jtFt * pct; // ft³
            } else {
              const jtM = jt / 100;
              return area * jtM * pct; // m³
            }
          } else {
            return calcBedVolume();
          }
        }

        function recalc() {
          const vol = calcMortarVolume();
          const wastePct = parseNum(els.wastePercent) / 100;
          const yieldBag = parseNum(els.yieldPerBag);
          if (vol <= 0 || yieldBag <= 0) {
            els.resultVolume.textContent = "–";
            els.resultVolumeWaste.textContent = "–";
            els.resultBags.textContent = "–";
            els.resultBagsWaste.textContent = "–";
            return;
          }

          const volWaste = vol * (1 + wastePct);
          const bags = vol / yieldBag;
          const bagsWaste = volWaste / yieldBag;

          const volUnit = state.unitSystem === "imperial" ? "ft³" : "m³";

          els.resultVolume.textContent =
            vol.toFixed(state.unitSystem === "imperial" ? 2 : 3) +
            " " +
            volUnit;
          els.resultVolumeWaste.textContent =
            volWaste.toFixed(state.unitSystem === "imperial" ? 2 : 3) +
            " " +
            volUnit;
          els.resultBags.textContent = bags.toFixed(1) + " bags";
          els.resultBagsWaste.textContent =
            Math.ceil(bagsWaste) + " bags (rounded up)";
        }

        function onMortarTypeChange() {
          if (els.mortarType.value === "custom") {
            els.customRatioSection.classList.remove("hidden");
          } else {
            els.customRatioSection.classList.add("hidden");
          }
        }

        function resetDefaults() {
          if (state.unitSystem === "imperial") {
            els.wallLength.value = 10;
            els.wallHeight.value = 8;
            els.unitLength.value = 7.625;
            els.unitHeight.value = 2.25;
            els.jointThickness.value = 0.375;
            els.mortarPercent.value = 18;
            els.bedArea.value = 100;
            els.bedThickness.value = 1;
            els.bagWeight.value = 80;
            els.yieldPerBag.value = 0.7;
          } else {
            els.wallLength.value = 3;
            els.wallHeight.value = 2.4;
            els.unitLength.value = 19;
            els.unitHeight.value = 5.7;
            els.jointThickness.value = 1;
            els.mortarPercent.value = 18;
            els.bedArea.value = 10;
            els.bedThickness.value = 2.5;
            els.bagWeight.value = 25;
            els.yieldPerBag.value = 0.02;
          }
          els.wastePercent.value = 10;
          recalc();
        }

        // Event listeners
        els.unitImperial.addEventListener("click", () =>
          setUnitSystem("imperial")
        );
        els.unitMetric.addEventListener("click", () => setUnitSystem("metric"));
        els.modeBtns.forEach((btn) =>
          btn.addEventListener("click", () => setMode(btn.dataset.mode))
        );

        [
          els.wallLength,
          els.wallHeight,
          els.unitLength,
          els.unitHeight,
          els.jointThickness,
          els.coveragePerUnit,
          els.mortarPercent,
          els.bedArea,
          els.bedThickness,
          els.yieldPerBag,
          els.wastePercent,
        ].forEach((el) => {
          el.addEventListener("input", recalc);
        });

        els.mortarType.addEventListener("change", () => {
          onMortarTypeChange();
          recalc();
        });

        els.resetBtn.addEventListener("click", function (e) {
          e.preventDefault();
          resetDefaults();
        });

        // Initial setup
        setUnitSystem("imperial");
        setMode("brick");
        onMortarTypeChange();
        resetDefaults();
      })();
    </script>

