    <script>
      // Utility formatters
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }
      function formatCurrency2(value) {
        if (!isFinite(value)) return "$0.00";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }
      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (
          value.toLocaleString(undefined, {
            minimumFractionDigits: 1,
            maximumFractionDigits: 2,
          }) + "%"
        );
      }

      function updateLease() {
        const msrp = parseFloat(document.getElementById("msrp").value) || 0;
        const capReduction =
          parseFloat(document.getElementById("capReduction").value) || 0;
        const term = parseInt(document.getElementById("term").value, 10) || 0;
        const residualType = document.getElementById("residualType").value;
        const residualPercent =
          parseFloat(document.getElementById("residualPercent").value) || 0;
        const residualAmountInput =
          parseFloat(document.getElementById("residualAmount").value) || 0;
        const moneyFactor =
          parseFloat(document.getElementById("moneyFactor").value) || 0;
        const apr = parseFloat(document.getElementById("apr").value) || 0;
        const salesTax =
          parseFloat(document.getElementById("salesTax").value) || 0;
        const fees = parseFloat(document.getElementById("fees").value) || 0;
        const upfront =
          parseFloat(document.getElementById("upfront").value) || 0;
        const annualMiles =
          parseInt(document.getElementById("annualMiles").value, 10) || 0;

        // Sync APR and money factor (if user edited one, keep both consistent)
        const activeElement = document.activeElement;
        let mf = moneyFactor;
        let aprVal = apr;
        if (activeElement && activeElement.id === "apr") {
          mf = aprVal / 2400;
          document.getElementById("moneyFactor").value = mf.toFixed(4);
        } else {
          aprVal = mf * 2400;
          document.getElementById("apr").value = aprVal.toFixed(2);
        }

        // Adjusted cap cost
        const capCost = Math.max(msrp + fees - capReduction, 0);

        // Residual
        let residual;
        if (residualType === "percent") {
          residual = msrp * (residualPercent / 100);
          document.getElementById("residualAmount").value = residual.toFixed(0);
        } else {
          residual = residualAmountInput;
          const perc = msrp > 0 ? (residual / msrp) * 100 : 0;
          document.getElementById("residualPercent").value = perc.toFixed(1);
        }

        // Depreciation and finance charges
        const totalDep = Math.max(capCost - residual, 0);
        const monthlyDep = term > 0 ? totalDep / term : 0;
        const monthlyFinance = (capCost + residual) * mf;
        const monthlyBase = monthlyDep + monthlyFinance;

        const monthlyTax = monthlyBase * (salesTax / 100);
        const monthlyTotal = monthlyBase + monthlyTax;

        const totalLeasePayments = monthlyTotal * term;
        const totalOutOfPocket = totalLeasePayments + upfront;

        const totalMiles = annualMiles * (term / 12);
        const costPerMile =
          totalMiles > 0 ? totalLeasePayments / totalMiles : 0;

        // Effective APR is just aprVal (already derived from MF)
        const effectiveApr = aprVal;

        // Update UI
        document.getElementById("termValue").textContent = term;
        document.getElementById("annualMilesValue").textContent =
          annualMiles.toLocaleString();

        document.getElementById("monthlyBase").textContent =
          formatCurrency2(monthlyBase);
        document.getElementById("monthlyTax").textContent =
          formatCurrency2(monthlyTax);
        document.getElementById("monthlyTotal").textContent =
          formatCurrency2(monthlyTotal);

        document.getElementById("capCost").textContent =
          formatCurrency(capCost);
        document.getElementById("residualOut").textContent =
          formatCurrency(residual);
        document.getElementById("totalDep").textContent =
          formatCurrency(totalDep);
        document.getElementById("totalFinance").textContent = formatCurrency(
          (totalFinance = monthlyFinance * term)
        );
        document.getElementById("totalLease").textContent =
          formatCurrency(totalLeasePayments);
        document.getElementById("totalOutOfPocket").textContent =
          formatCurrency(totalOutOfPocket);

        document.getElementById("effectiveApr").textContent =
          formatPercent(effectiveApr);
        document.getElementById("totalMiles").textContent =
          totalMiles.toLocaleString(undefined, { maximumFractionDigits: 0 });
        document.getElementById("costPerMile").textContent = isFinite(
          costPerMile
        )
          ? "$" + costPerMile.toFixed(2)
          : "$0.00";
      }

      function toggleResidualInputs() {
        const type = document.getElementById("residualType").value;
        const percentWrapper = document.getElementById(
          "residualPercentWrapper"
        );
        const amountWrapper = document.getElementById("residualAmountWrapper");
        if (type === "percent") {
          percentWrapper.classList.remove("hidden");
          amountWrapper.classList.add("hidden");
        } else {
          percentWrapper.classList.add("hidden");
          amountWrapper.classList.remove("hidden");
        }
        updateLease();
      }

      document.addEventListener("DOMContentLoaded", function () {
        const ids = [
          "msrp",
          "capReduction",
          "term",
          "residualType",
          "residualPercent",
          "residualAmount",
          "moneyFactor",
          "apr",
          "salesTax",
          "fees",
          "upfront",
          "annualMiles",
          "excessMileFee",
        ];
        ids.forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          el.addEventListener("input", updateLease);
          el.addEventListener("change", updateLease);
        });
        document
          .getElementById("residualType")
          .addEventListener("change", toggleResidualInputs);

        toggleResidualInputs();
        updateLease();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
