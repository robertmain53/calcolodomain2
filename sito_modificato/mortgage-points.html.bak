    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "-";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }
      function formatPercent(value, digits = 2) {
        if (!isFinite(value)) return "-";
        return value.toFixed(digits) + "%";
      }

      function calcMonthlyPayment(loan, annualRate, years) {
        const n = years * 12;
        const r = annualRate / 100 / 12;
        if (r === 0) return loan / n;
        return (loan * (r * Math.pow(1 + r, n))) / (Math.pow(1 + r, n) - 1);
      }

      function calcInterestOverHorizon(loan, annualRate, years, horizonYears) {
        const n = years * 12;
        const r = annualRate / 100 / 12;
        const horizonMonths = Math.min(Math.round(horizonYears * 12), n);
        const payment = calcMonthlyPayment(loan, annualRate, years);
        let balance = loan;
        let totalInterest = 0;
        for (let i = 0; i < horizonMonths; i++) {
          const interest = balance * r;
          const principal = payment - interest;
          totalInterest += interest;
          balance -= principal;
          if (balance <= 0) break;
        }
        return totalInterest;
      }

      function recalc() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const downPaymentInput =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const downModeDollarActive = document
          .getElementById("downModeDollar")
          .classList.contains("active");
        const loanTerm =
          parseFloat(document.getElementById("loanTerm").value) || 30;
        const baseRate =
          parseFloat(document.getElementById("baseRate").value) || 0;
        const points = parseFloat(document.getElementById("points").value) || 0;
        const rateWithPoints =
          parseFloat(document.getElementById("rateWithPoints").value) || 0;
        const horizonYears = Math.max(
          1,
          parseFloat(document.getElementById("horizonYears").value) || 1
        );
        const taxRate =
          Math.max(
            0,
            parseFloat(document.getElementById("taxRate").value) || 0
          ) / 100;

        let downDollar, downPercent;
        if (downModeDollarActive) {
          downDollar = Math.min(downPaymentInput, homePrice);
          downPercent = homePrice > 0 ? (downDollar / homePrice) * 100 : 0;
        } else {
          downPercent = Math.min(downPaymentInput, 100);
          downDollar = (homePrice * downPercent) / 100;
        }

        const loanAmount = Math.max(0, homePrice - downDollar);
        const pointsCost = loanAmount * (points / 100);

        const paymentNoPoints = calcMonthlyPayment(
          loanAmount,
          baseRate,
          loanTerm
        );
        const paymentWithPoints = calcMonthlyPayment(
          loanAmount,
          rateWithPoints,
          loanTerm
        );

        const n = loanTerm * 12;
        const totalInterestNoPoints = paymentNoPoints * n - loanAmount;
        const totalInterestWithPoints = paymentWithPoints * n - loanAmount;

        const interestNoPointsHorizon = calcInterestOverHorizon(
          loanAmount,
          baseRate,
          loanTerm,
          horizonYears
        );
        const interestWithPointsHorizon = calcInterestOverHorizon(
          loanAmount,
          rateWithPoints,
          loanTerm,
          horizonYears
        );

        const monthlySavings = paymentNoPoints - paymentWithPoints;
        const breakEvenMonths =
          monthlySavings > 0 ? pointsCost / monthlySavings : Infinity;
        const breakEvenYears = breakEvenMonths / 12;

        const lifetimeInterestSavings =
          totalInterestNoPoints - totalInterestWithPoints;
        const horizonInterestSavings =
          interestNoPointsHorizon - interestWithPointsHorizon;
        const horizonNetSavings = horizonInterestSavings - pointsCost;

        const afterTaxPointsCost = pointsCost * (1 - taxRate);
        const afterTaxInterestNoPointsHorizon =
          interestNoPointsHorizon * (1 - taxRate);
        const afterTaxInterestWithPointsHorizon =
          interestWithPointsHorizon * (1 - taxRate);
        const afterTaxHorizonSavings =
          (interestNoPointsHorizon - interestWithPointsHorizon) * (1 - taxRate);
        const afterTaxHorizonNetSavings =
          afterTaxHorizonSavings - afterTaxPointsCost;

        document.getElementById("downPaymentPercentInfo").textContent =
          homePrice > 0 ? `= ${downPercent.toFixed(1)}% down` : "";

        document.getElementById("loanAmountDisplay").textContent =
          formatCurrency(loanAmount);
        document.getElementById("pointsCostDisplay").textContent =
          formatCurrency(pointsCost);

        const pointsCostAfterTaxEl =
          document.getElementById("pointsCostAfterTax");
        if (taxRate > 0 && pointsCost > 0) {
          pointsCostAfterTaxEl.textContent = `Approx. after-tax cost (if fully deductible): ${formatCurrency(
            afterTaxPointsCost
          )}`;
          pointsCostAfterTaxEl.classList.remove("hidden");
        } else {
          pointsCostAfterTaxEl.classList.add("hidden");
        }

        const rateReduction = baseRate - rateWithPoints;
        document.getElementById("rateReductionDisplay").textContent = isFinite(
          rateReduction
        )
          ? formatPercent(rateReduction, 2)
          : "-";

        document.getElementById("noPointsRateDisplay").textContent =
          formatPercent(baseRate, 3);
        document.getElementById("withPointsRateDisplay").textContent =
          formatPercent(rateWithPoints, 3);

        document.getElementById("noPointsPaymentDisplay").textContent =
          formatCurrency(paymentNoPoints);
        document.getElementById("withPointsPaymentDisplay").textContent =
          formatCurrency(paymentWithPoints);

        document.getElementById("noPointsTotalInterestDisplay").textContent =
          formatCurrency(totalInterestNoPoints);
        document.getElementById("withPointsTotalInterestDisplay").textContent =
          formatCurrency(totalInterestWithPoints);

        document.getElementById("horizonYearsLabel1").textContent =
          horizonYears.toString();
        document.getElementById("horizonYearsLabel2").textContent =
          horizonYears.toString();
        document.getElementById("horizonYearsLabel3").textContent =
          horizonYears.toString();

        document.getElementById("noPointsHorizonInterestDisplay").textContent =
          formatCurrency(interestNoPointsHorizon);
        document.getElementById(
          "withPointsHorizonInterestDisplay"
        ).textContent = formatCurrency(interestWithPointsHorizon);

        const monthlySavingsText =
          monthlySavings > 0
            ? `You save ${formatCurrency(
                monthlySavings
              )} per month with points.`
            : monthlySavings < 0
            ? `You pay ${formatCurrency(
                -monthlySavings
              )} more per month with points.`
            : "Monthly payment is the same with or without points.";
        document.getElementById("monthlySavingsDisplay").textContent =
          monthlySavingsText;

        let breakEvenText;
        if (
          !isFinite(breakEvenMonths) ||
          breakEvenMonths <= 0 ||
          monthlySavings <= 0
        ) {
          breakEvenText =
            "No break-even: points do not reduce your payment in this setup.";
        } else {
          breakEvenText = `~${breakEvenYears.toFixed(1)} years (${Math.round(
            breakEvenMonths
          )} payments)`;
        }
        document.getElementById("breakEvenDisplay").textContent = breakEvenText;

        document.getElementById("lifetimeInterestSavingsDisplay").textContent =
          formatCurrency(lifetimeInterestSavings);
        document.getElementById("horizonInterestSavingsDisplay").textContent =
          formatCurrency(horizonInterestSavings);

        const horizonNetEl = document.getElementById("horizonNetDisplay");
        if (isFinite(horizonNetSavings)) {
          const label =
            taxRate > 0
              ? `Approx. after-tax net savings over ${horizonYears} years (if points & interest deductible): `
              : `Net savings over ${horizonYears} years after points cost: `;
          const value =
            taxRate > 0 ? afterTaxHorizonNetSavings : horizonNetSavings;
          horizonNetEl.innerHTML = `${label}<span class="font-semibold">${formatCurrency(
            value
          )}</span>`;
        } else {
          horizonNetEl.textContent = "";
        }

        const adviceEl = document.getElementById("adviceText");
        let advice = "";
        if (!isFinite(breakEvenMonths) || monthlySavings <= 0) {
          advice =
            "With your current inputs, paying points does not reduce your monthly payment, so they are unlikely to be a good deal. Check that the “rate with points” is actually lower than the base rate.";
        } else if (horizonYears < breakEvenYears) {
          advice = `Your break-even time (~${breakEvenYears.toFixed(
            1
          )} years) is longer than your expected time in the loan (${horizonYears.toFixed(
            1
          )} years). In this case, paying points is probably not worth it.`;
        } else {
          advice = `Your break-even time (~${breakEvenYears.toFixed(
            1
          )} years) is shorter than your expected time in the loan (${horizonYears.toFixed(
            1
          )} years). Paying points is likely to save you money, assuming your plans don’t change.`;
        }
        adviceEl.textContent = advice;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const downModeDollar = document.getElementById("downModeDollar");
        const downModePercent = document.getElementById("downModePercent");
        const downPaymentInput = document.getElementById("downPayment");
        const homePriceInput = document.getElementById("homePrice");

        function setDownMode(isDollar) {
          if (isDollar) {
            downModeDollar.classList.add("active");
            downModePercent.classList.remove("active");
          } else {
            downModeDollar.classList.remove("active");
            downModePercent.classList.add("active");
          }
          recalc();
        }

        downModeDollar.addEventListener("click", function () {
          setDownMode(true);
        });
        downModePercent.addEventListener("click", function () {
          setDownMode(false);
        });

        document.getElementById("calcBtn").addEventListener("click", recalc);

        [
          homePriceInput,
          downPaymentInput,
          document.getElementById("loanTerm"),
          document.getElementById("baseRate"),
          document.getElementById("points"),
          document.getElementById("rateWithPoints"),
          document.getElementById("horizonYears"),
          document.getElementById("taxRate"),
        ].forEach((el) => {
          el.addEventListener("input", () => {
            if (
              el.id === "homePrice" &&
              !downModeDollar.classList.contains("active")
            ) {
              // keep percentage the same when price changes in percent mode
            }
            recalc();
          });
          el.addEventListener("change", recalc);
        });

        recalc();
      });
    </script>

