    <script>
      // Simple internal chain tables (very approximate, for demo/preliminary design)
      const chainTables = {
        ISO: [
          { size: "08B-1", pitch_mm: 12.7, allow_kW_1500: 3 },
          { size: "10B-1", pitch_mm: 15.875, allow_kW_1500: 5 },
          { size: "12B-1", pitch_mm: 19.05, allow_kW_1500: 8 },
          { size: "16B-1", pitch_mm: 25.4, allow_kW_1500: 15 },
        ],
        ANSI: [
          { size: "#40", pitch_mm: 12.7, allow_kW_1500: 3 },
          { size: "#50", pitch_mm: 15.875, allow_kW_1500: 5 },
          { size: "#60", pitch_mm: 19.05, allow_kW_1500: 8 },
          { size: "#80", pitch_mm: 25.4, allow_kW_1500: 15 },
        ],
      };

      function hpToKw(hp) {
        return hp * 0.7457;
      }
      function kwToHp(kw) {
        return kw / 0.7457;
      }

      function mmToIn(mm) {
        return mm / 25.4;
      }
      function inToMm(inch) {
        return inch * 25.4;
      }

      function roundTo(value, decimals) {
        const f = Math.pow(10, decimals);
        return Math.round(value * f) / f;
      }

      function nearestEven(n) {
        const r = Math.round(n);
        return r % 2 === 0 ? r : r + 1;
      }

      function calculateChainDrive() {
        const errorEl = document.getElementById("calcError");
        errorEl.textContent = "";

        let P = parseFloat(document.getElementById("power").value);
        const powerUnit = document.getElementById("powerUnit").value;
        const n1 = parseFloat(document.getElementById("speed").value);
        const i = parseFloat(document.getElementById("speedRatio").value);
        let aInput = parseFloat(
          document.getElementById("centerDistance").value
        );
        const aUnit = document.getElementById("centerDistanceUnit").value;
        const Ks = parseFloat(document.getElementById("serviceFactor").value);
        const series = document.getElementById("chainSeries").value;
        const z1Input = document.getElementById("z1").value.trim();
        const z2Input = document.getElementById("z2").value.trim();

        if (
          isNaN(P) ||
          P <= 0 ||
          isNaN(n1) ||
          n1 <= 0 ||
          isNaN(i) ||
          i <= 0 ||
          isNaN(aInput) ||
          aInput <= 0
        ) {
          errorEl.textContent =
            "Please enter positive values for power, speed, ratio and center distance.";
          return;
        }

        // Convert power to kW
        if (powerUnit === "HP") {
          P = hpToKw(P);
        }

        // Convert center distance to mm
        let a_mm = aUnit === "mm" ? aInput : inToMm(aInput);

        const Pd = P * Ks; // design power in kW

        // Select chain size
        const table = chainTables[series];
        if (!table) {
          errorEl.textContent = "Internal chain table not found.";
          return;
        }

        // Simple speed factor: assume table is for 1500 rpm, scale allowable power ~ sqrt(n/1500)
        const speedFactor = Math.sqrt(n1 / 1500);
        let selected = null;
        for (const row of table) {
          const allow = row.allow_kW_1500 * speedFactor;
          if (allow >= Pd) {
            selected = { ...row, allow_kW: allow };
            break;
          }
        }
        if (!selected) {
          selected = table[table.length - 1];
          selected = {
            ...selected,
            allow_kW: selected.allow_kW_1500 * speedFactor,
          };
          errorEl.textContent =
            "Warning: design power is high for the largest chain in the internal table. Consider a larger or multi-strand chain and check manufacturer data.";
        }

        const p = selected.pitch_mm; // pitch in mm

        // Sprocket teeth
        let z1 = z1Input ? parseInt(z1Input, 10) : null;
        let z2 = z2Input ? parseInt(z2Input, 10) : null;

        if (z1 && z1 < 12) {
          errorEl.textContent =
            "Driver sprocket teeth should typically be ≥ 12–17. Increase z₁ if possible.";
        }

        if (!z1 && !z2) {
          // choose z1 in 17–25 range depending on ratio
          if (i <= 2) z1 = 19;
          else if (i <= 3) z1 = 17;
          else z1 = 15;
        }
        if (!z1 && z2) {
          z1 = Math.round(z2 / i);
        }
        if (!z2 && z1) {
          z2 = Math.round(z1 * i);
        }

        if (!z1 || !z2 || z1 <= 0 || z2 <= 0) {
          errorEl.textContent =
            "Unable to determine sprocket tooth counts. Please enter valid z₁ and/or z₂.";
          return;
        }

        const ratioActual = z2 / z1;

        // Chain length in pitches (ISO formula)
        const a = a_mm; // center distance in mm
        const term1 = (2 * a) / p;
        const term2 = (z1 + z2) / 2;
        const term3 = (Math.pow(z2 - z1, 2) * p) / (4 * Math.PI * Math.PI * a);
        const Lp = term1 + term2 + term3;
        const L = nearestEven(Lp);

        // Recompute exact center distance from integer L
        // Rearranged approximate formula solved iteratively for a
        // Use simple iteration: start from a_mm and adjust
        let a_exact = a_mm;
        for (let iter = 0; iter < 20; iter++) {
          const f =
            (2 * a_exact) / p +
            (z1 + z2) / 2 +
            (Math.pow(z2 - z1, 2) * p) / (4 * Math.PI * Math.PI * a_exact) -
            L;
          const df =
            2 / p -
            (Math.pow(z2 - z1, 2) * p) /
              (4 * Math.PI * Math.PI * a_exact * a_exact);
          a_exact = a_exact - f / df;
          if (!isFinite(a_exact) || a_exact <= 0) {
            a_exact = a_mm;
            break;
          }
        }

        // Pitch circle diameter of driver sprocket
        const d1_mm = p / Math.sin(Math.PI / z1);
        const v_mps = (Math.PI * (d1_mm / 1000) * n1) / 60; // m/s

        // Safety factor
        const SF = selected.allow_kW / Pd;

        // Populate results
        document.getElementById("resSeries").textContent =
          series === "ISO" ? "ISO / DIN roller chain" : "ANSI roller chain";
        document.getElementById("resSize").textContent = selected.size;
        document.getElementById("resPitch").textContent = `${roundTo(
          p,
          2
        )} mm (${roundTo(mmToIn(p), 3)} in)`;
        document.getElementById("resAllowPower").textContent = `${roundTo(
          selected.allow_kW,
          2
        )} kW (${roundTo(kwToHp(selected.allow_kW), 2)} HP) @ ${Math.round(
          n1
        )} rpm`;
        document.getElementById("resDesignPower").textContent = `${roundTo(
          Pd,
          2
        )} kW (service factor ${Ks})`;
        document.getElementById("resSafetyFactor").textContent = SF
          ? roundTo(SF, 2)
          : "–";

        document.getElementById("resZ1").textContent = z1;
        document.getElementById("resZ2").textContent = z2;
        document.getElementById("resRatio").textContent = `${roundTo(
          ratioActual,
          3
        )} (requested ${roundTo(i, 3)})`;
        document.getElementById(
          "resLinks"
        ).textContent = `${L} pitches (links)`;
        const a_exact_mm = a_exact;
        const a_exact_in = mmToIn(a_exact_mm);
        document.getElementById("resCenter").textContent = `${roundTo(
          a_exact_mm,
          1
        )} mm (${roundTo(a_exact_in, 3)} in)`;
        document.getElementById("resSpeed").textContent = `${roundTo(
          v_mps,
          2
        )} m/s`;

        let notes = "";
        if (v_mps > 15) {
          notes +=
            "Chain speed is relatively high (>15 m/s). Check manufacturer limits and consider a higher-speed chain or different drive type.<br>";
        } else if (v_mps > 8) {
          notes +=
            "Chain speed is moderate to high. Ensure good lubrication and alignment.<br>";
        }
        if (SF < 1.0) {
          notes +=
            "Safety factor based on power is below 1.0. Select a larger chain size or reduce service factor.<br>";
        } else if (SF < 1.2) {
          notes +=
            "Safety factor is marginal. For heavy-duty or critical drives, consider a larger chain.<br>";
        }
        if (!notes) {
          notes =
            "Design appears reasonable for preliminary sizing. Always verify with manufacturer data before finalizing.";
        }
        document.getElementById("resultNotes").innerHTML = notes;
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateChainDrive);
      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("power").value = 5;
        document.getElementById("powerUnit").value = "kW";
        document.getElementById("speed").value = 1450;
        document.getElementById("speedRatio").value = 2;
        document.getElementById("centerDistance").value = 600;
        document.getElementById("centerDistanceUnit").value = "mm";
        document.getElementById("serviceFactor").value = "1.2";
        document.getElementById("chainSeries").value = "ISO";
        document.getElementById("z1").value = "";
        document.getElementById("z2").value = "";
        document.getElementById("calcError").textContent = "";
        document.getElementById("resultNotes").textContent = "";
        const ids = [
          "resSeries",
          "resSize",
          "resPitch",
          "resAllowPower",
          "resDesignPower",
          "resSafetyFactor",
          "resZ1",
          "resZ2",
          "resRatio",
          "resLinks",
          "resCenter",
          "resSpeed",
        ];
        ids.forEach((id) => (document.getElementById(id).textContent = "–"));
      });

      // Auto-calc on load with defaults
      window.addEventListener("load", calculateChainDrive);
    </script>

