    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = document.querySelectorAll(".tab-panel");
      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => {
            b.classList.remove(
              "bg-white",
              "border",
              "border-b-0",
              "border-gray-200",
              "text-blue-600"
            );
            b.classList.add("text-gray-600");
          });
          btn.classList.add(
            "bg-white",
            "border",
            "border-b-0",
            "border-gray-200",
            "text-blue-600"
          );
          btn.classList.remove("text-gray-600");
          tabPanels.forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "tab-" + target);
          });
        });
      });

      // Text counter
      const textCounterInput = document.getElementById("textCounterInput");
      function updateTextCounts() {
        const text = textCounterInput.value || "";
        const chars = text.length;
        const charsNoSpace = text.replace(/\s+/g, "").length;
        const words = text.trim() ? text.trim().split(/\s+/).length : 0;
        const lines = text.split(/\r\n|\r|\n/).length;
        document.getElementById("charCount").textContent = chars;
        document.getElementById("charNoSpaceCount").textContent = charsNoSpace;
        document.getElementById("wordCount").textContent = words;
        document.getElementById("lineCount").textContent = lines;
      }
      textCounterInput.addEventListener("input", updateTextCounts);
      updateTextCounts();

      // Case converter
      const caseInput = document.getElementById("caseInput");
      document.querySelectorAll(".case-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.getAttribute("data-case");
          let text = caseInput.value || "";
          if (!text) return;
          if (mode === "upper") {
            caseInput.value = text.toUpperCase();
          } else if (mode === "lower") {
            caseInput.value = text.toLowerCase();
          } else if (mode === "title") {
            caseInput.value = text
              .toLowerCase()
              .replace(/\b\w/g, (c) => c.toUpperCase());
          } else if (mode === "sentence") {
            const sentences = text.toLowerCase().split(/([.!?]\s+)/);
            for (let i = 0; i < sentences.length; i += 2) {
              sentences[i] = sentences[i].replace(/^\s*\w/, (c) =>
                c.toUpperCase()
              );
            }
            caseInput.value = sentences.join("");
          }
        });
      });

      // Text clean-up
      const cleanupInput = document.getElementById("cleanupInput");
      document.querySelectorAll(".cleanup-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.getAttribute("data-clean");
          let text = cleanupInput.value || "";
          if (!text) return;
          if (mode === "trim") {
            cleanupInput.value = text.trim();
          } else if (mode === "dedupe-spaces") {
            cleanupInput.value = text.replace(/[ \t]+/g, " ");
          } else if (mode === "remove-blank-lines") {
            cleanupInput.value = text
              .split(/\r\n|\r|\n/)
              .filter((line) => line.trim() !== "")
              .join("\n");
          }
        });
      });

      // Random number generator
      function randomInt(min, max) {
        return Math.floor(Math.random() * (max - min + 1)) + min;
      }
      document.getElementById("randGenerate").addEventListener("click", () => {
        const min = parseInt(document.getElementById("randMin").value, 10);
        const max = parseInt(document.getElementById("randMax").value, 10);
        let count = parseInt(document.getElementById("randCount").value, 10);
        const unique = document.getElementById("randUnique").checked;
        const resultArea = document.getElementById("randResult");
        if (isNaN(min) || isNaN(max) || min > max) {
          resultArea.value = "Please enter a valid range.";
          return;
        }
        if (isNaN(count) || count < 1) count = 1;
        if (unique && count > max - min + 1) {
          resultArea.value =
            "Cannot generate that many unique numbers in the given range.";
          return;
        }
        const results = [];
        if (unique) {
          const pool = [];
          for (let i = min; i <= max; i++) pool.push(i);
          for (let i = pool.length - 1; i > 0; i--) {
            const j = randomInt(0, i);
            [pool[i], pool[j]] = [pool[j], pool[i]];
          }
          results.push(...pool.slice(0, count));
        } else {
          for (let i = 0; i < count; i++) {
            results.push(randomInt(min, max));
          }
        }
        resultArea.value = results.join(", ");
      });

      // Dice roller
      const diceSidesInput = document.getElementById("diceSides");
      const diceCountInput = document.getElementById("diceCount");
      const diceModifierInput = document.getElementById("diceModifier");
      const diceRollsSpan = document.getElementById("diceRolls");
      const diceTotalSpan = document.getElementById("diceTotal");

      document.querySelectorAll(".dice-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const sides = parseInt(btn.getAttribute("data-die"), 10);
          diceSidesInput.value = sides;
        });
      });

      document.getElementById("diceRoll").addEventListener("click", () => {
        const sides = parseInt(diceSidesInput.value, 10);
        let count = parseInt(diceCountInput.value, 10);
        const modifier = parseInt(diceModifierInput.value || "0", 10);
        if (isNaN(sides) || sides < 2) {
          diceRollsSpan.textContent = "Invalid number of sides.";
          diceTotalSpan.textContent = "0";
          return;
        }
        if (isNaN(count) || count < 1) count = 1;
        const rolls = [];
        let total = 0;
        for (let i = 0; i < count; i++) {
          const roll = randomInt(1, sides);
          rolls.push(roll);
          total += roll;
        }
        const totalWithMod = total + modifier;
        diceRollsSpan.textContent =
          rolls.join(", ") +
          (modifier
            ? ` (modifier ${modifier >= 0 ? "+" : ""}${modifier})`
            : "");
        diceTotalSpan.textContent = totalWithMod;
      });

      // Password generator
      function generatePassword(length, sets) {
        let chars = "";
        if (sets.lower) chars += "abcdefghijklmnopqrstuvwxyz";
        if (sets.upper) chars += "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        if (sets.digits) chars += "0123456789";
        if (sets.symbols) chars += "!@#$%^&*()-_=+[]{};:,.<>?/|~";
        if (!chars) return "";
        let pwd = "";
        for (let i = 0; i < length; i++) {
          const idx = Math.floor(Math.random() * chars.length);
          pwd += chars[idx];
        }
        return pwd;
      }
      document.getElementById("pwdGenerate").addEventListener("click", () => {
        let length = parseInt(document.getElementById("pwdLength").value, 10);
        if (isNaN(length) || length < 4) length = 4;
        if (length > 64) length = 64;
        const sets = {
          lower: document.getElementById("pwdLower").checked,
          upper: document.getElementById("pwdUpper").checked,
          digits: document.getElementById("pwdDigits").checked,
          symbols: document.getElementById("pwdSymbols").checked,
        };
        const pwd = generatePassword(length, sets);
        const out = document.getElementById("pwdResult");
        out.value = pwd || "Please select at least one character set.";
      });
      document.getElementById("pwdCopy").addEventListener("click", () => {
        const out = document.getElementById("pwdResult");
        if (!out.value) return;
        out.select();
        out.setSelectionRange(0, 99999);
        try {
          document.execCommand("copy");
        } catch (e) {}
        window.getSelection().removeAllRanges();
      });

      // Email validator
      document.getElementById("emailCheck").addEventListener("click", () => {
        const email = (
          document.getElementById("emailInput").value || ""
        ).trim();
        const result = document.getElementById("emailResult");
        if (!email) {
          result.textContent = "Please enter an email address.";
          result.className = "mt-2 text-sm font-medium text-gray-600";
          return;
        }
        const regex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (regex.test(email)) {
          result.textContent = "This looks like a valid email format.";
          result.className = "mt-2 text-sm font-medium text-green-600";
        } else {
          result.textContent = "This does not look like a valid email format.";
          result.className = "mt-2 text-sm font-medium text-red-600";
        }
      });

      // URL validator
      document.getElementById("urlCheck").addEventListener("click", () => {
        const urlStr = (document.getElementById("urlInput").value || "").trim();
        const result = document.getElementById("urlResult");
        if (!urlStr) {
          result.textContent = "Please enter a URL.";
          result.className = "mt-2 text-sm font-medium text-gray-600";
          return;
        }
        try {
          const url = new URL(urlStr);
          if (["http:", "https:", "ftp:"].includes(url.protocol)) {
            result.textContent = "This is a valid URL format.";
            result.className = "mt-2 text-sm font-medium text-green-600";
          } else {
            result.textContent = "URL uses an unsupported protocol.";
            result.className = "mt-2 text-sm font-medium text-red-600";
          }
        } catch (e) {
          result.textContent = "This does not look like a valid URL.";
          result.className = "mt-2 text-sm font-medium text-red-600";
        }
      });

      // Luhn checksum
      function luhnCheck(numStr) {
        if (!/^\d+$/.test(numStr)) return false;
        let sum = 0;
        let shouldDouble = false;
        for (let i = numStr.length - 1; i >= 0; i--) {
          let digit = parseInt(numStr.charAt(i), 10);
          if (shouldDouble) {
            digit *= 2;
            if (digit > 9) digit -= 9;
          }
          sum += digit;
          shouldDouble = !shouldDouble;
        }
        return sum % 10 === 0;
      }
      document.getElementById("luhnCheck").addEventListener("click", () => {
        const value = (
          document.getElementById("luhnInput").value || ""
        ).replace(/\s+/g, "");
        const result = document.getElementById("luhnResult");
        if (!value) {
          result.textContent = "Please enter a numeric string.";
          result.className = "mt-2 text-sm font-medium text-gray-600";
          return;
        }
        if (!/^\d+$/.test(value)) {
          result.textContent = "Only digits are allowed for Luhn check.";
          result.className = "mt-2 text-sm font-medium text-red-600";
          return;
        }
        if (luhnCheck(value)) {
          result.textContent = "This number passes the Luhn checksum.";
          result.className = "mt-2 text-sm font-medium text-green-600";
        } else {
          result.textContent = "This number does NOT pass the Luhn checksum.";
          result.className = "mt-2 text-sm font-medium text-red-600";
        }
      });

      // Time difference
      document.getElementById("timeDiffCalc").addEventListener("click", () => {
        const start = document.getElementById("timeStart").value;
        const end = document.getElementById("timeEnd").value;
        const result = document.getElementById("timeDiffResult");
        if (!start || !end) {
          result.textContent = "Please enter both start and end times.";
          result.className = "mt-2 text-sm font-medium text-gray-600";
          return;
        }
        const [sh, sm] = start.split(":").map(Number);
        const [eh, em] = end.split(":").map(Number);
        let startMin = sh * 60 + sm;
        let endMin = eh * 60 + em;
        if (endMin < startMin) {
          result.textContent = "End time must be after start time (same day).";
          result.className = "mt-2 text-sm font-medium text-red-600";
          return;
        }
        const diff = endMin - startMin;
        const hours = Math.floor(diff / 60);
        const minutes = diff % 60;
        result.textContent = `Duration: ${hours} hour${
          hours !== 1 ? "s" : ""
        } ${minutes} minute${
          minutes !== 1 ? "s" : ""
        } (${diff} minutes total).`;
        result.className = "mt-2 text-sm font-medium text-gray-800";
      });

      // Seconds <-> H:M:S
      document.getElementById("secondsToHms").addEventListener("click", () => {
        let seconds = parseInt(
          document.getElementById("secondsInput").value,
          10
        );
        const result = document.getElementById("secondsToHmsResult");
        if (isNaN(seconds) || seconds < 0) {
          result.textContent = "Please enter a non-negative number of seconds.";
          result.className = "mt-2 text-sm font-medium text-red-600";
          return;
        }
        const h = Math.floor(seconds / 3600);
        seconds %= 3600;
        const m = Math.floor(seconds / 60);
        const s = seconds % 60;
        result.textContent = `${h}h ${m}m ${s}s`;
        result.className = "mt-2 text-sm font-medium text-gray-800";
      });

      document.getElementById("hmsToSeconds").addEventListener("click", () => {
        let h = parseInt(document.getElementById("hmsHours").value, 10);
        let m = parseInt(document.getElementById("hmsMinutes").value, 10);
        let s = parseInt(document.getElementById("hmsSeconds").value, 10);
        const result = document.getElementById("hmsToSecondsResult");
        if (isNaN(h) || h < 0) h = 0;
        if (isNaN(m) || m < 0) m = 0;
        if (isNaN(s) || s < 0) s = 0;
        const total = h * 3600 + m * 60 + s;
        result.textContent = `${total} seconds`;
        result.className = "mt-2 text-sm font-medium text-gray-800";
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
