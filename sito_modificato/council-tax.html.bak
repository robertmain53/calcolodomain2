    <script>
      // Council tax band multipliers
      const bandMultipliers = {
        england: {
          // same as Scotland
          A: 6 / 9,
          B: 7 / 9,
          C: 8 / 9,
          D: 9 / 9,
          E: 11 / 9,
          F: 13 / 9,
          G: 15 / 9,
          H: 18 / 9,
        },
        scotland: {
          A: 6 / 9,
          B: 7 / 9,
          C: 8 / 9,
          D: 9 / 9,
          E: 11 / 9,
          F: 13 / 9,
          G: 15 / 9,
          H: 18 / 9,
        },
        wales: {
          A: 6 / 9,
          B: 7 / 9,
          C: 8 / 9,
          D: 9 / 9,
          E: 11 / 9,
          F: 13 / 9,
          G: 15 / 9,
          H: 18 / 9,
          I: 21 / 9,
        },
        ni: {
          // approximate – treat like England bands A–H
          A: 6 / 9,
          B: 7 / 9,
          C: 8 / 9,
          D: 9 / 9,
          E: 11 / 9,
          F: 13 / 9,
          G: 15 / 9,
          H: 18 / 9,
        },
      };

      function populateBandOptions() {
        const nation = document.getElementById("nation").value;
        const bandSelect = document.getElementById("band");
        const bands = Object.keys(bandMultipliers[nation]);
        bandSelect.innerHTML = "";
        bands.forEach((b) => {
          const opt = document.createElement("option");
          opt.value = b;
          opt.textContent = `Band ${b}`;
          bandSelect.appendChild(opt);
        });
        // Default to Band D if available
        if (bands.includes("D")) bandSelect.value = "D";
        updateBandTable();
      }

      function updateBandTable() {
        const tbody = document.getElementById("bandTableBody");
        const eng = bandMultipliers.england;
        const wal = bandMultipliers.wales;
        tbody.innerHTML = "";
        const allBands = Array.from(
          new Set([...Object.keys(eng), ...Object.keys(wal)])
        ).sort((a, b) => a.localeCompare(b));
        allBands.forEach((band) => {
          const tr = document.createElement("tr");
          tr.className = "border-b last:border-0";
          const tdBand = document.createElement("td");
          tdBand.className = "py-1 pr-2";
          tdBand.textContent = band;
          const tdEng = document.createElement("td");
          tdEng.className = "py-1 pr-2 text-right";
          tdEng.textContent = eng[band] ? eng[band].toFixed(3) : "–";
          const tdWal = document.createElement("td");
          tdWal.className = "py-1 text-right";
          tdWal.textContent = wal[band] ? wal[band].toFixed(3) : "–";
          tr.appendChild(tdBand);
          tr.appendChild(tdEng);
          tr.appendChild(tdWal);
          tbody.appendChild(tr);
        });
      }

      function formatMoney(value) {
        if (!isFinite(value)) return "£0.00";
        return "£" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calculateCouncilTax() {
        const nation = document.getElementById("nation").value;
        const band = document.getElementById("band").value;
        const bandD = parseFloat(document.getElementById("bandD").value) || 0;
        const adultCount =
          parseInt(document.getElementById("adultCount").value, 10) || 0;

        const singlePerson = document.getElementById("singlePerson").checked;
        const allStudents = document.getElementById("allStudents").checked;
        const smi = document.getElementById("severeMentalImpairment").checked;
        const disabilityReduction = document.getElementById(
          "disabilityReduction"
        ).checked;
        const councilTaxSupport =
          document.getElementById("councilTaxSupport").checked;
        const emptyDiscount =
          parseFloat(document.getElementById("emptyDiscount").value) || 0;

        const multipliers = bandMultipliers[nation];
        const baseMultiplier = multipliers[band] || 0;

        // Disability band reduction: move down one band if possible
        let effectiveMultiplier = baseMultiplier;
        let effectiveBand = band;
        if (disabilityReduction) {
          const bands = Object.keys(multipliers).sort((a, b) =>
            a.localeCompare(b)
          );
          const idx = bands.indexOf(band);
          if (idx > 0) {
            const lowerBand = bands[idx - 1];
            effectiveBand = lowerBand;
            effectiveMultiplier = multipliers[lowerBand];
          }
        }

        const grossYear = bandD * effectiveMultiplier;

        // If all residents are students or all chargeable adults are SMI -> 100% exemption
        let discountFactor = 0;
        let discountDetails = [];

        if (allStudents) {
          discountFactor = 1;
          discountDetails.push("100% exemption for full-time students");
        } else if (smi && adultCount > 0) {
          discountFactor = 1;
          discountDetails.push("100% exemption for severe mental impairment");
        } else {
          // Single person discount
          if (singlePerson && adultCount === 1) {
            discountFactor += 0.25;
            discountDetails.push("25% single person discount");
          }

          // Council tax reduction (rough estimate)
          if (councilTaxSupport) {
            discountFactor += 0.2;
            discountDetails.push("20% Council Tax Reduction (estimate)");
          }

          // Empty / second home discount or premium
          if (emptyDiscount !== 0) {
            if (emptyDiscount > 0) {
              discountFactor += emptyDiscount;
              discountDetails.push(
                `${Math.round(
                  emptyDiscount * 100
                )}% empty / second home discount`
              );
            } else {
              // premium: negative discount
              discountFactor += emptyDiscount; // e.g. -0.5 adds 50% premium
              discountDetails.push(
                `${Math.round(
                  Math.abs(emptyDiscount) * 100
                )}% long-term empty home premium`
              );
            }
          }
        }

        // Cap discountFactor between -1 and 1 (to avoid negative bills or more than 200% premiums)
        if (discountFactor > 1) discountFactor = 1;
        if (discountFactor < -1) discountFactor = -1;

        const netYear = grossYear * (1 - discountFactor);
        const netMonth = netYear / 12;
        const netWeek = netYear / 52;

        document.getElementById(
          "resultBandLabel"
        ).textContent = `Effective band: ${effectiveBand} (${
          nation === "ni"
            ? "approximate"
            : nation.charAt(0).toUpperCase() + nation.slice(1)
        })`;
        document.getElementById("grossYear").textContent =
          formatMoney(grossYear);
        document.getElementById("netYear").textContent = formatMoney(netYear);
        document.getElementById("netMonth").textContent = formatMoney(netMonth);
        document.getElementById("netWeek").textContent = formatMoney(netWeek);

        const summaryEl = document.getElementById("discountSummary");
        if (discountDetails.length === 0) {
          summaryEl.textContent = "No discounts or premiums applied.";
        } else {
          summaryEl.textContent =
            "Adjustments applied: " + discountDetails.join("; ") + ".";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateBandOptions();
        document
          .getElementById("nation")
          .addEventListener("change", populateBandOptions);
        document.getElementById("calcBtn").addEventListener("click", (e) => {
          e.preventDefault();
          calculateCouncilTax();
        });
        // Initial calculation
        calculateCouncilTax();
      });
    </script>

