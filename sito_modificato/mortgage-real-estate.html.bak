    <script>
      // Mortgage Scenario Explorer logic
      (function () {
        const priceInput = document.getElementById("homePrice");
        const priceRange = document.getElementById("homePriceRange");
        const downInput = document.getElementById("downPaymentPct");
        const downRange = document.getElementById("downPaymentRange");
        const rateInput = document.getElementById("interestRate");
        const rateRange = document.getElementById("interestRateRange");
        const termSelect = document.getElementById("loanTerm");

        const monthlyPaymentEl = document.getElementById("monthlyPayment");
        const loanAmountEl = document.getElementById("loanAmount");
        const incomeNeededEl = document.getElementById("incomeNeeded");

        function sync(input, range) {
          input.addEventListener("input", () => {
            if (!isNaN(parseFloat(input.value))) {
              range.value = input.value;
              calculate();
            }
          });
          range.addEventListener("input", () => {
            input.value = range.value;
            calculate();
          });
        }

        function formatMoney(value) {
          if (!isFinite(value)) return "$0";
          return (
            "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
          );
        }

        function calculate() {
          const price = parseFloat(priceInput.value) || 0;
          const downPct = Math.min(
            Math.max(parseFloat(downInput.value) || 0, 0),
            100
          );
          const rate = parseFloat(rateInput.value) || 0;
          const years = parseInt(termSelect.value, 10) || 30;

          const downAmount = price * (downPct / 100);
          const loanAmount = Math.max(price - downAmount, 0);
          const n = years * 12;
          const r = rate / 100 / 12;

          let monthly = 0;
          if (loanAmount > 0 && r > 0 && n > 0) {
            const pow = Math.pow(1 + r, n);
            monthly = (loanAmount * (r * pow)) / (pow - 1);
          } else if (loanAmount > 0 && r === 0 && n > 0) {
            monthly = loanAmount / n;
          }

          const incomeNeeded = monthly > 0 ? monthly / 0.28 : 0;

          loanAmountEl.textContent = formatMoney(loanAmount);
          monthlyPaymentEl.textContent = formatMoney(monthly);
          incomeNeededEl.textContent = formatMoney(incomeNeeded);
        }

        if (
          priceInput &&
          priceRange &&
          downInput &&
          downRange &&
          rateInput &&
          rateRange &&
          termSelect
        ) {
          sync(priceInput, priceRange);
          sync(downInput, downRange);
          sync(rateInput, rateRange);
          termSelect.addEventListener("change", calculate);
          calculate();
        }
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
