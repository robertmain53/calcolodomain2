    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const fxInput = document.getElementById("fx");
        const aInput = document.getElementById("a");
        const bInput = document.getElementById("b");
        const nInput = document.getElementById("n");
        const autoRefine = document.getElementById("auto-refine");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        const resultsSection = document.getElementById("results-section");
        const simpsonResultEl = document.getElementById("simpson-result");
        const simpsonExprEl = document.getElementById("simpson-expression");
        const refinedResultEl = document.getElementById("refined-result");
        const errorEstimateEl = document.getElementById("error-estimate");
        const stepsBody = document.getElementById("steps-body");

        let chart;
        let ChartLibLoaded = false;

        function parseFunction(expr) {
          // Very lightweight parser using Function; supports common Math functions.
          const safeExpr = expr
            .replace(/(\d)(x)/gi, "$1*x")
            .replace(/(\bpi\b)/gi, "Math.PI")
            .replace(/\be\b/g, "Math.E")
            .replace(
              /\b(sin|cos|tan|asin|acos|atan|sinh|cosh|tanh|log10|log2|sqrt|abs|exp|floor|ceil|round|max|min)\s*\(/g,
              "Math.$1("
            )
            .replace(/\blog\(/g, "Math.log("); // natural log

          try {
            const f = new Function("x", `with (Math) { return ${safeExpr}; }`);
            // Test evaluation
            f(0);
            return f;
          } catch (e) {
            throw new Error(
              "Could not parse function. Please check your syntax."
            );
          }
        }

        function simpsonRule(f, a, b, n) {
          const h = (b - a) / n;
          let sum = 0;
          const table = [];

          for (let i = 0; i <= n; i++) {
            const x = a + i * h;
            let fx;
            try {
              fx = f(x);
            } catch (e) {
              throw new Error(
                "Error evaluating f(x). Check for domain issues (e.g., sqrt of negative)."
              );
            }
            if (!isFinite(fx)) {
              throw new Error(
                "f(x) produced a non-finite value. Check the function and interval."
              );
            }

            let weight;
            if (i === 0 || i === n) {
              weight = 1;
            } else if (i % 2 === 1) {
              weight = 4;
            } else {
              weight = 2;
            }
            const term = weight * fx;
            sum += term;

            table.push({ i, x, fx, weight, term });
          }

          const approx = (h / 3) * sum;
          return { approx, h, table };
        }

        function formatNumber(val, digits = 10) {
          if (!isFinite(val)) return "NaN";
          const abs = Math.abs(val);
          if (abs !== 0 && (abs < 1e-4 || abs > 1e6)) {
            return val.toExponential(6);
          }
          return Number(val.toFixed(digits)).toString();
        }

        function renderTable(table, h) {
          stepsBody.innerHTML = "";
          table.forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
        <td class="px-2 py-1 border-b">${row.i}</td>
        <td class="px-2 py-1 border-b">${formatNumber(row.x, 6)}</td>
        <td class="px-2 py-1 border-b">${formatNumber(row.fx, 6)}</td>
        <td class="px-2 py-1 border-b">${row.weight}</td>
        <td class="px-2 py-1 border-b">${formatNumber(row.term, 6)}</td>
      `;
            stepsBody.appendChild(tr);
          });
        }

        function buildChartData(f, a, b, table) {
          const samples = 200;
          const step = (b - a) / samples;
          const funcData = [];
          for (let i = 0; i <= samples; i++) {
            const x = a + i * step;
            let y;
            try {
              y = f(x);
            } catch {
              y = NaN;
            }
            funcData.push({ x, y });
          }

          // Build Simpson polygonal approximation using table points
          const simpsonData = table.map((row) => ({ x: row.x, y: row.fx }));

          return { funcData, simpsonData };
        }

        function renderChart(f, a, b, table) {
          const ctx = document.getElementById("simpson-chart").getContext("2d");
          const { funcData, simpsonData } = buildChartData(f, a, b, table);

          const labels = funcData.map((p) => p.x);
          const funcVals = funcData.map((p) => p.y);
          const simpsonLabels = simpsonData.map((p) => p.x);
          const simpsonVals = simpsonData.map((p) => p.y);

          if (chart) {
            chart.destroy();
          }

          if (typeof Chart === "undefined") {
            // Chart.js not yet loaded (defer). Try again shortly.
            if (!ChartLibLoaded) {
              setTimeout(() => renderChart(f, a, b, table), 300);
            }
            return;
          }
          ChartLibLoaded = true;

          chart = new Chart(ctx, {
            type: "line",
            data: {
              labels,
              datasets: [
                {
                  label: "f(x)",
                  data: funcVals,
                  borderColor: "#2563eb",
                  borderWidth: 2,
                  fill: false,
                  pointRadius: 0,
                },
                {
                  label: "Simpson nodes",
                  data: simpsonVals,
                  borderColor: "#f97316",
                  borderWidth: 1.5,
                  fill: false,
                  pointRadius: 3,
                  pointBackgroundColor: "#f97316",
                  showLine: true,
                  stepped: false,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              interaction: { mode: "index", intersect: false },
              plugins: {
                legend: { display: true },
                tooltip: {
                  callbacks: {
                    label: (ctx) =>
                      ` ${ctx.dataset.label}: ${formatNumber(ctx.parsed.y, 6)}`,
                  },
                },
              },
              scales: {
                x: {
                  type: "linear",
                  title: { display: true, text: "x" },
                  ticks: {
                    callback: (val) => formatNumber(val, 4),
                  },
                },
                y: {
                  title: { display: true, text: "f(x)" },
                },
              },
              elements: {
                line: { tension: 0.2 },
              },
            },
          });
        }

        function calculate() {
          const expr = fxInput.value.trim();
          if (!expr) {
            alert("Please enter a function f(x).");
            return;
          }

          const a = parseFloat(aInput.value);
          const b = parseFloat(bInput.value);
          let n = parseInt(nInput.value, 10);

          if (!isFinite(a) || !isFinite(b)) {
            alert("Please enter valid numeric limits a and b.");
            return;
          }
          if (a === b) {
            alert("The limits a and b must be different.");
            return;
          }
          if (!Number.isInteger(n) || n < 2) {
            alert("n must be an integer ≥ 2.");
            return;
          }
          if (n % 2 !== 0) {
            alert(
              "Simpson's rule requires n to be even. We will increase n by 1."
            );
            n += 1;
            nInput.value = n;
          }

          let f;
          try {
            f = parseFunction(expr);
          } catch (e) {
            alert(e.message);
            return;
          }

          let primary;
          try {
            primary = simpsonRule(f, a, b, n);
          } catch (e) {
            alert(e.message);
            return;
          }

          const approx = primary.approx;
          simpsonResultEl.textContent = formatNumber(approx, 10);
          simpsonExprEl.textContent = `S_${n} with h = ${(b - a) / n}`;

          renderTable(primary.table, primary.h);
          renderChart(f, a, b, primary.table);

          if (autoRefine.checked) {
            try {
              const refined = simpsonRule(f, a, b, 2 * n);
              const approx2 = refined.approx;
              const err = Math.abs(approx2 - approx);
              refinedResultEl.textContent = `S_${2 * n} = ${formatNumber(
                approx2,
                10
              )}`;
              errorEstimateEl.textContent = `Estimated error ≈ |S_${
                2 * n
              } − S_${n}| = ${formatNumber(err, 4)}`;
            } catch (e) {
              refinedResultEl.textContent = "—";
              errorEstimateEl.textContent =
                "Could not compute refined approximation: " + e.message;
            }
          } else {
            refinedResultEl.textContent = "Refinement disabled";
            errorEstimateEl.textContent =
              "Check “Refine with 2n” to estimate the numerical error.";
          }

          resultsSection.classList.remove("hidden");
        }

        function resetForm() {
          fxInput.value = "sin(x)";
          aInput.value = 0;
          bInput.value = Math.PI.toString();
          nInput.value = 10;
          autoRefine.checked = false;
          resultsSection.classList.add("hidden");
          stepsBody.innerHTML = "";
          if (chart) {
            chart.destroy();
            chart = null;
          }
        }

        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetForm);

        // Allow Enter key to trigger calculation
        document
          .getElementById("simpson-form")
          .addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              calculate();
            }
          });
      });
    </script>
  
