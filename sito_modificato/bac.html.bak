      btn.addEventListener('click', () => {
        modeButtons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        currentMode = btn.dataset.mode;
      });
    });

    function encodeBacon(text, variant, symA, symB, group5, keepUnknown) {
      const map = getMapping(variant);
      const upper = text.toUpperCase();
      const out = [];
      for (let i = 0; i < upper.length; i++) {
        const ch = upper[i];
        if (ch >= "A" && ch <= "Z") {
          const pattern = map[ch];
          if (pattern) {
            const converted = pattern.replace(/A/g, symA).replace(/B/g, symB);
            out.push(converted);
          } else if (keepUnknown) {
            out.push(ch);
          }
        } else {
          if (keepUnknown) out.push(ch);
        }
      }
      let joined = out.join(group5 ? " " : "");
      return joined.trim();
    }

    function decodeBacon(text, variant, symA, symB, keepUnknown) {
      const map = getMapping(variant);
      const inv = invertMapping(map);
      const clean = text
        .toUpperCase()
        .replace(new RegExp("[^" + symA.toUpperCase() + symB.toUpperCase() + "]", "g"), "");
      const groups = clean.match(new RegExp(".{1,5}", "g")) || [];
      const decoded = [];
      groups.forEach(g => {
        if (g.length < 5) {
          if (keepUnknown) decoded.push("?");
          return;
        }
        const ab = g.replace(new RegExp(symA, "gi"), "A").replace(new RegExp(symB, "gi"), "B");
        const letter = inv[ab];
        if (letter) decoded.push(letter);
        else if (keepUnknown) decoded.push("?");
      });
      return decoded.join("");
    }

    document.getElementById('convertBtn').addEventListener('click', () => {
      const variant = document.getElementById('variant').value;
      const symA = document.getElementById('symA').value || "A";
      const symB = document.getElementById('symB').value || "B";
      const group5 = document.getElementById('group5').checked;
      const keepUnknown = document.getElementById('keepUnknown').checked;
      const input = document.getElementById('input').value;

      if (!input.trim()) {
        alert("Please enter some text to convert.");
        return;
      }

      let result = "";
      if (currentMode === "encode") {
        result = encodeBacon(input, variant, symA, symB, group5, keepUnknown);
      } else {
        result = decodeBacon(input, variant, symA, symB, keepUnknown);
      }
      document.getElementById('output').value = result;
    });

    document.getElementById('clearBtn').addEventListener('click', () => {
      document.getElementById('input').value = "";
      document.getElementById('output').value = "";
    });

    document.getElementById('buildStego').addEventListener('click', () => {
      const encoded = document.getElementById('output').value.replace(/\s+/g, "");
      const cover = document.getElementById('cover').value;
      if (!encoded) {
        alert("You need an encoded (A/B) message first.");
        return;
      }
      if (!cover) {
        alert("Please provide a cover text.");
        return;
      }
      // interpret encoded as A/B after mapping custom symbols to A/B
      const symA = document.getElementById('symA').value || "A";
      const symB = document.getElementById('symB').value || "B";
      const seq = encoded
        .toUpperCase()
        .replace(new RegExp(symA.toUpperCase(), "g"), "A")
        .replace(new RegExp(symB.toUpperCase(), "g"), "B")
        .replace(/[^AB]/g, "");
      let idx = 0;
      const outChars = cover.split("").map(ch => {
        if (idx >= seq.length) return ch;
        const code = seq[idx++];
        if (/[a-zA-Z]/.test(ch)) {
          return code === "A" ? ch.toUpperCase() : ch.toLowerCase();
        }
        return ch;
      });
      document.getElementById('stegoOutput').value = outChars.join("");
    });

    // initial encode
    document.getElementById('convertBtn').click();
  </script>

