    <script>
      // --- Montana tax logic (simplified & documented) ---

      // Approximate standard deduction table (flat amounts, not exact statute)
      const MT_STANDARD_DEDUCTION = {
        2024: {
          single: 14000,
          mfj: 28000,
          mfs: 14000,
          hoh: 21000,
        },
        2023: {
          single: 13800,
          mfj: 27600,
          mfs: 13800,
          hoh: 20700,
        },
      };

      // Example progressive bracket schedule for Montana (approximate, single).
      // For production, replace with official current-year brackets.
      const MT_BRACKETS = {
        2024: [
          { upTo: 4000, rate: 0.01 },
          { upTo: 8000, rate: 0.02 },
          { upTo: 12000, rate: 0.03 },
          { upTo: 18000, rate: 0.04 },
          { upTo: 26000, rate: 0.05 },
          { upTo: 36000, rate: 0.06 },
          { upTo: Infinity, rate: 0.0675 },
        ],
        2023: [
          { upTo: 4000, rate: 0.01 },
          { upTo: 8000, rate: 0.02 },
          { upTo: 12000, rate: 0.03 },
          { upTo: 18000, rate: 0.04 },
          { upTo: 26000, rate: 0.05 },
          { upTo: 36000, rate: 0.06 },
          { upTo: Infinity, rate: 0.0675 },
        ],
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toLocaleString("en-US", {
          style: "percent",
          minimumFractionDigits: 1,
          maximumFractionDigits: 2,
        });
      }

      function computeProgressiveTax(taxable, year) {
        const brackets = MT_BRACKETS[year] || MT_BRACKETS["2024"];
        let remaining = Math.max(0, taxable);
        let lower = 0;
        let totalTax = 0;
        let marginalRate = 0;
        const breakdown = [];

        for (const b of brackets) {
          if (remaining <= 0) break;
          const upper = b.upTo;
          const span = Math.min(remaining, upper - lower);
          if (span > 0) {
            const tax = span * b.rate;
            breakdown.push({
              from: lower,
              to: upper,
              amount: span,
              rate: b.rate,
              tax: tax,
            });
            totalTax += tax;
            marginalRate = b.rate;
            remaining -= span;
            lower = upper;
          }
        }

        return { totalTax, marginalRate, breakdown };
      }

      function updateBracketTable(breakdown) {
        const tbody = document.getElementById("bracket-tbody");
        tbody.innerHTML = "";
        if (!breakdown || breakdown.length === 0) {
          tbody.innerHTML =
            '<tr><td class="px-3 py-2 text-gray-500" colspan="4">No taxable income.</td></tr>';
          return;
        }
        breakdown.forEach((row, idx) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b">Bracket ${
          idx + 1
        }: $${row.from.toLocaleString()} – ${
            row.to === Infinity ? "and above" : "$" + row.to.toLocaleString()
          }</td>
        <td class="px-3 py-2 border-b text-right">$${row.amount.toLocaleString()}</td>
        <td class="px-3 py-2 border-b text-right">${(row.rate * 100).toFixed(
          2
        )}%</td>
        <td class="px-3 py-2 border-b text-right">${formatMoney(row.tax)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function calculateMontanaTax() {
        const year = document.getElementById("tax-year").value;
        const filingStatus = document.getElementById("filing-status").value;
        const income =
          parseFloat(document.getElementById("gross-income").value) || 0;
        const additions =
          parseFloat(document.getElementById("mt-additions").value) || 0;
        const credits =
          parseFloat(document.getElementById("mt-credits").value) || 0;
        const pretax =
          parseFloat(document.getElementById("pretax-deductions").value) || 0;
        const otherWithholding =
          parseFloat(document.getElementById("other-withholding").value) || 0;
        const deductionType =
          document.querySelector('input[name="deduction-type"]:checked')
            ?.value || "standard";
        const itemized =
          parseFloat(document.getElementById("itemized-deduction").value) || 0;

        const errorEl = document.getElementById("calc-error");
        errorEl.textContent = "";

        if (income < 0) {
          errorEl.textContent = "Income cannot be negative.";
          return;
        }

        let deduction;
        if (deductionType === "standard") {
          deduction =
            (MT_STANDARD_DEDUCTION[year] || MT_STANDARD_DEDUCTION["2024"])[
              filingStatus
            ] || 0;
        } else {
          deduction = Math.max(0, itemized);
        }

        const adjustedIncome = income + additions;
        const taxableIncome = Math.max(0, adjustedIncome - deduction);

        const { totalTax, marginalRate, breakdown } = computeProgressiveTax(
          taxableIncome,
          year
        );
        const taxAfterCredits = Math.max(0, totalTax - credits);
        const effectiveRate = income > 0 ? taxAfterCredits / income : 0;
        const takeHome = income - pretax - taxAfterCredits;

        // Update summary
        document.getElementById("res-taxable-income").textContent =
          formatMoney(taxableIncome);
        document.getElementById("res-mt-tax").textContent =
          formatMoney(taxAfterCredits);
        document.getElementById("res-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("res-marginal-rate").textContent =
          formatPercent(marginalRate);
        document.getElementById("res-takehome").textContent =
          formatMoney(takeHome);

        // Deductions & credits
        document.getElementById("res-deduction").textContent =
          formatMoney(deduction);
        document.getElementById("res-additions").textContent =
          formatMoney(additions);
        document.getElementById("res-credits").textContent =
          formatMoney(credits);
        document.getElementById("res-pretax").textContent = formatMoney(pretax);
        document.getElementById("res-withholding").textContent =
          formatMoney(otherWithholding);

        // Bracket table
        updateBracketTable(breakdown);
      }

      document.addEventListener("DOMContentLoaded", () => {
        const itemizedWrapper = document.getElementById("itemized-wrapper");
        const standardNote = document.getElementById("standard-deduction-note");

        document
          .querySelectorAll('input[name="deduction-type"]')
          .forEach((radio) => {
            radio.addEventListener("change", () => {
              if (radio.value === "itemized" && radio.checked) {
                itemizedWrapper.classList.remove("hidden");
                standardNote.classList.add("hidden");
              } else if (radio.value === "standard" && radio.checked) {
                itemizedWrapper.classList.add("hidden");
                standardNote.classList.remove("hidden");
              }
            });
          });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateMontanaTax);

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("mt-tax-form").reset();
          document.getElementById("tax-year").value = "2024";
          document.getElementById("filing-status").value = "single";
          document.getElementById("gross-income").value = 60000;
          document.getElementById("mt-additions").value = 0;
          document.getElementById("mt-credits").value = 0;
          document.getElementById("pretax-deductions").value = 0;
          document.getElementById("other-withholding").value = 0;
          document.getElementById("itemized-deduction").value = 10000;
          document.querySelector(
            'input[name="deduction-type"][value="standard"]'
          ).checked = true;
          document.getElementById("itemized-wrapper").classList.add("hidden");
          document
            .getElementById("standard-deduction-note")
            .classList.remove("hidden");
          document.getElementById("calc-error").textContent = "";
          document.getElementById("res-taxable-income").textContent = "$0";
          document.getElementById("res-mt-tax").textContent = "$0";
          document.getElementById("res-effective-rate").textContent = "0%";
          document.getElementById("res-marginal-rate").textContent = "0%";
          document.getElementById("res-takehome").textContent = "$0";
          document.getElementById("res-deduction").textContent = "$0";
          document.getElementById("res-additions").textContent = "$0";
          document.getElementById("res-credits").textContent = "$0";
          document.getElementById("res-pretax").textContent = "$0";
          document.getElementById("res-withholding").textContent = "$0";
          document.getElementById("bracket-tbody").innerHTML =
            '<tr><td class="px-3 py-2 text-gray-500" colspan="4">Run a calculation to see how your income is taxed in each bracket.</td></tr>';
        });

        // Auto-run initial example
        calculateMontanaTax();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
