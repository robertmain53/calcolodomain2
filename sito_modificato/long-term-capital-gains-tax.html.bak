    <script>
      // 2024 LTCG bracket thresholds (approx; can be updated easily)
      const ltcgBrackets2024 = {
        single: { zero: 47025, fifteen: 518900 },
        mfj: { zero: 94050, fifteen: 583750 },
        mfs: { zero: 47025, fifteen: 291850 },
        hoh: { zero: 63000, fifteen: 551350 },
      };

      // For 2025 we currently reuse 2024 thresholds as an estimate
      const ltcgBrackets2025 = ltcgBrackets2024;

      function getBrackets(year, status) {
        const map = year === "2024" ? ltcgBrackets2024 : ltcgBrackets2025;
        return map[status] || map.mfj;
      }

      function parseMoney(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value.replace(/,/g, ""));
        return isNaN(v) ? 0 : Math.max(0, v);
      }

      function formatMoney(v) {
        return "$" + v.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function formatPercent(v) {
        if (!isFinite(v) || v < 0) return "0%";
        return v.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function calculateLTCG() {
        const year = document.getElementById("tax-year").value;
        const status = document.getElementById("filing-status").value;

        let ordinary = parseMoney("ordinary-income");
        const ltGains = parseMoney("lt-gains");
        const ltLosses = parseMoney("lt-losses");
        const ltCarry = parseMoney("lt-carryover");

        const stMode = document.getElementById("st-mode").value;
        let netST = 0;
        if (stMode === "include") {
          const stGains = parseMoney("st-gains");
          const stLosses = parseMoney("st-losses");
          netST = stGains - stLosses;
          if (netST < 0) {
            const offset = Math.min(3000, -netST, ordinary);
            ordinary -= offset;
          } else if (netST > 0) {
            ordinary += netST;
          }
        }

        let netLT = ltGains - ltLosses - ltCarry;
        if (netLT < 0) netLT = 0;

        const brackets = getBrackets(year, status);
        const B0 = brackets.zero;
        const B15 = brackets.fifteen;

        const totalTaxable = ordinary + netLT;

        // Amount of LT gain taxed at 0%
        let amt0 = 0,
          amt15 = 0,
          amt20 = 0;
        if (netLT > 0) {
          const room0 = Math.max(0, B0 - ordinary);
          amt0 = Math.min(netLT, room0);

          const remainingAfter0 = netLT - amt0;
          const room15 = Math.max(0, B15 - ordinary - amt0);
          amt15 = Math.min(remainingAfter0, room15);

          amt20 = Math.max(0, netLT - amt0 - amt15);
        }

        const tax = amt0 * 0 + amt15 * 0.15 + amt20 * 0.2;
        const effectiveRate = netLT > 0 ? (tax / netLT) * 100 : 0;

        document.getElementById("net-lt-gain").textContent = formatMoney(netLT);
        document.getElementById("total-taxable").textContent =
          formatMoney(totalTaxable);
        document.getElementById("amt-0").textContent = formatMoney(amt0);
        document.getElementById("amt-15").textContent = formatMoney(amt15);
        document.getElementById("amt-20").textContent = formatMoney(amt20);
        document.getElementById("lt-tax").textContent = formatMoney(tax);
        document.getElementById("effective-rate").textContent =
          formatPercent(effectiveRate);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const stModeEl = document.getElementById("st-mode");
        const stSection = document.getElementById("st-section");
        if (stModeEl) {
          stModeEl.addEventListener("change", () => {
            if (stModeEl.value === "include") {
              stSection.classList.remove("hidden");
            } else {
              stSection.classList.add("hidden");
            }
          });
        }

        const btn = document.getElementById("calc-btn");
        if (btn)
          btn.addEventListener("click", function (e) {
            e.preventDefault();
            calculateLTCG();
          });

        // Scenario buttons
        const scenarioAButton = document.getElementById("scenarioA-btn");
        const scenarioBButton = document.getElementById("scenarioB-btn");
        if (scenarioAButton) {
          scenarioAButton.addEventListener("click", function () {
            const val = parseMoney("scenarioA-gain");
            document.getElementById("lt-gains").value = val;
            calculateLTCG();
          });
        }
        if (scenarioBButton) {
          scenarioBButton.addEventListener("click", function () {
            const val = parseMoney("scenarioB-gain");
            document.getElementById("lt-gains").value = val;
            calculateLTCG();
          });
        }

        // Auto-calc on load
        calculateLTCG();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
