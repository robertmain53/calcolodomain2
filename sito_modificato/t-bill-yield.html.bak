    <script>
      // Initialize dates with a typical 13-week bill example
      (function initDates() {
        const settlementInput = document.getElementById("tbill-settlement");
        const maturityInput = document.getElementById("tbill-maturity");
        const today = new Date();
        const pad = (n) => String(n).padStart(2, "0");
        const toISO = (d) =>
          d.getFullYear() +
          "-" +
          pad(d.getMonth() + 1) +
          "-" +
          pad(d.getDate());
        settlementInput.value = toISO(today);
        const maturity = new Date(today.getTime() + 91 * 24 * 60 * 60 * 1000);
        maturityInput.value = toISO(maturity);
      })();

      // Toggle quote type inputs
      document.querySelectorAll('input[name="quoteType"]').forEach((radio) => {
        radio.addEventListener("change", () => {
          const type = document.querySelector(
            'input[name="quoteType"]:checked'
          ).value;
          document
            .getElementById("price-input-group")
            .classList.toggle("hidden", type !== "price");
          document
            .getElementById("discount-input-group")
            .classList.toggle("hidden", type !== "discount");
        });
      });

      function parseDateInput(id) {
        const val = document.getElementById(id).value;
        if (!val) return null;
        const parts = val.split("-");
        if (parts.length !== 3) return null;
        const [y, m, d] = parts.map(Number);
        return new Date(y, m - 1, d);
      }

      function formatPercent(x) {
        if (!isFinite(x)) return "–";
        return (x * 100).toFixed(3) + "%";
      }

      function formatMoney(x) {
        if (!isFinite(x)) return "–";
        return "$" + x.toFixed(2);
      }

      function formatPricePer100(x) {
        if (!isFinite(x)) return "–";
        return x.toFixed(3);
      }

      document
        .getElementById("tbill-calc-btn")
        .addEventListener("click", () => {
          const errorEl = document.getElementById("tbill-error");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          const face = parseFloat(document.getElementById("tbill-face").value);
          if (!(face > 0)) {
            errorEl.textContent = "Face value must be greater than zero.";
            errorEl.classList.remove("hidden");
            return;
          }

          const quoteType = document.querySelector(
            'input[name="quoteType"]:checked'
          ).value;
          let pricePer100, discRate;

          if (quoteType === "price") {
            pricePer100 = parseFloat(
              document.getElementById("tbill-price").value
            );
            if (!(pricePer100 > 0 && pricePer100 <= 120)) {
              errorEl.textContent =
                "Enter a realistic price per 100 of par (e.g., between 80 and 120).";
              errorEl.classList.remove("hidden");
              return;
            }
          } else {
            discRate =
              parseFloat(document.getElementById("tbill-discount").value) / 100;
            if (!isFinite(discRate)) {
              errorEl.textContent = "Enter a valid discount rate.";
              errorEl.classList.remove("hidden");
              return;
            }
          }

          const settlement = parseDateInput("tbill-settlement");
          const maturity = parseDateInput("tbill-maturity");
          if (!settlement || !maturity || maturity <= settlement) {
            errorEl.textContent =
              "Maturity date must be after settlement date.";
            errorEl.classList.remove("hidden");
            return;
          }

          const msPerDay = 24 * 60 * 60 * 1000;
          const days = Math.round((maturity - settlement) / msPerDay);
          if (days <= 0) {
            errorEl.textContent = "Days to maturity must be positive.";
            errorEl.classList.remove("hidden");
            return;
          }

          const basis = document.getElementById("tbill-basis").value;
          const basisDays = 365; // for investment rate & EAY; discount yield always uses 360

          // Derive missing value
          if (quoteType === "discount") {
            // Price from discount yield: Price = 100 * (1 - d * Days / 360)
            pricePer100 = 100 * (1 - (discRate * days) / 360);
          } else {
            // Discount yield from price: d = (100 - Price)/100 * (360/Days)
            discRate = ((100 - pricePer100) / 100) * (360 / days);
          }

          const priceAmount = (face * pricePer100) / 100;
          const discountAmt = face - priceAmount;
          const hpr = discountAmt / priceAmount;

          // Investment rate (simple annualized)
          const investRate = hpr * (basisDays / days);

          // Effective annual yield
          const eay = Math.pow(1 + hpr, basisDays / days) - 1;

          // Bond-equivalent yield (approximate semiannual compounding)
          const bey =
            2 *
            (Math.pow(
              1 + (investRate * days) / basisDays,
              basisDays / (2 * days)
            ) -
              1);

          // Output
          document.getElementById("tbill-days").textContent = days + " days";
          document.getElementById("tbill-price-out").textContent =
            formatPricePer100(pricePer100);
          document.getElementById("tbill-disc-yield").textContent =
            formatPercent(discRate);
          document.getElementById("tbill-invest-rate").textContent =
            formatPercent(investRate);
          document.getElementById("tbill-bey").textContent = formatPercent(bey);
          document.getElementById("tbill-eay").textContent = formatPercent(eay);
          document.getElementById("tbill-discount-amt").textContent =
            formatMoney(discountAmt);
          document.getElementById("tbill-interest").textContent =
            formatMoney(discountAmt); // same as discount for T-bills
        });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const indicator = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              indicator.textContent = "−";
            }
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
