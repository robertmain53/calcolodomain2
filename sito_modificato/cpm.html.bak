    <script>
      // CPM Calculator Logic
      (function () {
        const modeTabs = document.querySelectorAll(".cpm-tab");
        const form = document.getElementById("cpm-form");
        const totalCostInput = document.getElementById("totalCost");
        const impressionsInput = document.getElementById("impressions");
        const cpmInput = document.getElementById("cpmValue");
        const currencySelect = document.getElementById("currency");
        const currencyPrefix = document.getElementById("currency-prefix");
        const currencyPrefixOptional = document.getElementById(
          "currency-prefix-optional"
        );
        const clicksInput = document.getElementById("clicks");
        const conversionsInput = document.getElementById("conversions");
        const revenueInput = document.getElementById("revenue");
        const btnCalculate = document.getElementById("btnCalculate");
        const btnReset = document.getElementById("btnReset");

        const groupCost = document.getElementById("group-cost");
        const groupImpressions = document.getElementById("group-impressions");
        const groupCpm = document.getElementById("group-cpm");

        const resultsSection = document.getElementById("results-section");
        const resultMain = document.getElementById("result-main");
        const resultSecondary = document.getElementById("result-secondary");
        const resultPerformance = document.getElementById("result-performance");
        const resultNote = document.getElementById("result-note");

        let currentMode = "cpm";

        function updateCurrencyPrefix() {
          const symbol = currencySelect.value || "$";
          currencyPrefix.textContent = symbol;
          currencyPrefixOptional.textContent = symbol;
        }

        function setMode(mode) {
          currentMode = mode;
          modeTabs.forEach((tab) => {
            if (tab.dataset.mode === mode) {
              tab.classList.add(
                "border-blue-600",
                "text-blue-700",
                "bg-blue-50"
              );
              tab.classList.remove("border-transparent", "text-gray-600");
            } else {
              tab.classList.remove(
                "border-blue-600",
                "text-blue-700",
                "bg-blue-50"
              );
              tab.classList.add("border-transparent", "text-gray-600");
            }
          });

          // Show/hide fields depending on mode
          groupCost.classList.remove("hidden");
          groupImpressions.classList.remove("hidden");
          groupCpm.classList.remove("hidden");

          if (mode === "cpm") {
            // Find CPM: need cost + impressions
            groupCost.classList.remove("opacity-50");
            groupImpressions.classList.remove("opacity-50");
            groupCpm.classList.add("opacity-50");
            cpmInput.placeholder = "Calculated automatically";
          } else if (mode === "cost") {
            // Find cost: need CPM + impressions
            groupCost.classList.add("opacity-50");
            groupImpressions.classList.remove("opacity-50");
            groupCpm.classList.remove("opacity-50");
            totalCostInput.placeholder = "Calculated automatically";
          } else if (mode === "impressions") {
            // Find impressions: need CPM + cost
            groupCost.classList.remove("opacity-50");
            groupImpressions.classList.add("opacity-50");
            groupCpm.classList.remove("opacity-50");
            impressionsInput.placeholder = "Calculated automatically";
          } else if (mode === "ecpm") {
            // eCPM: need revenue + impressions (cost optional)
            groupCost.classList.remove("opacity-50");
            groupImpressions.classList.remove("opacity-50");
            groupCpm.classList.add("opacity-50");
            cpmInput.placeholder = "Calculated automatically (eCPM)";
          }
        }

        function formatNumber(num, decimals = 2) {
          if (!isFinite(num)) return "-";
          return num.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          });
        }

        function parse(input) {
          const v = parseFloat(input.value);
          return isNaN(v) ? null : v;
        }

        function calculate() {
          const symbol = currencySelect.value || "$";
          let cost = parse(totalCostInput);
          let impressions = parse(impressionsInput);
          let cpm = parse(cpmInput);
          const clicks = parse(clicksInput);
          const conversions = parse(conversionsInput);
          const revenue = parse(revenueInput);

          let mainText = "";
          let secondaryItems = [];
          let noteText = "";

          // Core CPM math
          if (currentMode === "cpm") {
            if (cost == null || impressions == null || impressions <= 0) {
              alert("Please enter valid total cost and impressions.");
              return;
            }
            cpm = (cost / impressions) * 1000;
            mainText = `CPM = ${symbol}${formatNumber(
              cpm
            )} per 1,000 impressions`;
            secondaryItems.push(`Total cost: ${symbol}${formatNumber(cost)}`);
            secondaryItems.push(`Impressions: ${formatNumber(impressions, 0)}`);
          } else if (currentMode === "cost") {
            if (cpm == null || impressions == null || impressions <= 0) {
              alert("Please enter valid CPM and impressions.");
              return;
            }
            cost = (cpm * impressions) / 1000;
            mainText = `Total cost = ${symbol}${formatNumber(cost)}`;
            secondaryItems.push(
              `CPM: ${symbol}${formatNumber(cpm)} per 1,000 impressions`
            );
            secondaryItems.push(`Impressions: ${formatNumber(impressions, 0)}`);
          } else if (currentMode === "impressions") {
            if (cpm == null || cost == null || cpm <= 0) {
              alert("Please enter valid CPM and total cost.");
              return;
            }
            impressions = (cost / cpm) * 1000;
            mainText = `Impressions ≈ ${formatNumber(impressions, 0)}`;
            secondaryItems.push(`Total cost: ${symbol}${formatNumber(cost)}`);
            secondaryItems.push(
              `CPM: ${symbol}${formatNumber(cpm)} per 1,000 impressions`
            );
          } else if (currentMode === "ecpm") {
            if (revenue == null || impressions == null || impressions <= 0) {
              alert("Please enter valid revenue and impressions for eCPM.");
              return;
            }
            const ecpm = (revenue / impressions) * 1000;
            mainText = `Effective CPM (eCPM) = ${symbol}${formatNumber(
              ecpm
            )} per 1,000 impressions`;
            secondaryItems.push(`Revenue: ${symbol}${formatNumber(revenue)}`);
            secondaryItems.push(`Impressions: ${formatNumber(impressions, 0)}`);
            if (cost != null && cost > 0) {
              const margin = ((revenue - cost) / cost) * 100;
              secondaryItems.push(`Profit margin: ${formatNumber(margin)}%`);
            }
          }

          // Performance metrics if optional fields are filled
          let perfItems = [];
          if (
            clicks != null &&
            impressions != null &&
            impressions > 0 &&
            clicks >= 0
          ) {
            const ctr = (clicks / impressions) * 100;
            perfItems.push(`CTR: ${formatNumber(ctr, 2)}%`);
          }
          if (cost != null && cost > 0 && clicks != null && clicks > 0) {
            const cpc = cost / clicks;
            perfItems.push(`CPC: ${symbol}${formatNumber(cpc)} per click`);
          }
          if (
            cost != null &&
            cost > 0 &&
            conversions != null &&
            conversions > 0
          ) {
            const cpa = cost / conversions;
            perfItems.push(`CPA: ${symbol}${formatNumber(cpa)} per conversion`);
          }
          if (revenue != null && revenue > 0 && cost != null && cost > 0) {
            const roas = revenue / cost;
            const profit = revenue - cost;
            perfItems.push(`ROAS: ${formatNumber(roas, 2)}x`);
            perfItems.push(`Profit: ${symbol}${formatNumber(profit)}`);
          }
          if (revenue != null && impressions != null && impressions > 0) {
            const ecpm = (revenue / impressions) * 1000;
            perfItems.push(
              `eCPM (from revenue): ${symbol}${formatNumber(
                ecpm
              )} per 1,000 impressions`
            );
          }

          // Update DOM
          resultMain.textContent = mainText;
          resultSecondary.innerHTML = "";
          secondaryItems.forEach((text) => {
            const li = document.createElement("li");
            li.textContent = text;
            resultSecondary.appendChild(li);
          });

          resultPerformance.innerHTML = "";
          if (perfItems.length === 0) {
            const li = document.createElement("li");
            li.className = "text-gray-400";
            li.textContent =
              "Enter clicks, conversions, and revenue to see CPC, CTR, CPA, ROAS, and eCPM.";
            resultPerformance.appendChild(li);
          } else {
            perfItems.forEach((text) => {
              const li = document.createElement("li");
              li.textContent = text;
              resultPerformance.appendChild(li);
            });
          }

          if (currentMode === "cpm") {
            noteText =
              "CPM is rounded to two decimal places. Small changes in impressions or cost can slightly change the CPM.";
          } else if (currentMode === "cost") {
            noteText =
              "Total cost is based on the CPM you entered and may differ slightly from platform-reported spend due to rounding.";
          } else if (currentMode === "impressions") {
            noteText =
              "Impressions are an estimate based on CPM and budget. Actual delivery can vary by auction dynamics and pacing.";
          } else {
            noteText =
              "eCPM helps you compare monetization or performance across different channels and pricing models.";
          }
          resultNote.textContent = noteText;

          resultsSection.classList.remove("hidden");
          resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
        }

        function resetForm() {
          form.reset();
          updateCurrencyPrefix();
          impressionsInput.placeholder = "e.g. 200000";
          totalCostInput.placeholder = "e.g. 500";
          cpmInput.placeholder = "e.g. 5";
          resultsSection.classList.add("hidden");
        }

        modeTabs.forEach((tab) => {
          tab.addEventListener("click", () => setMode(tab.dataset.mode));
        });

        currencySelect.addEventListener("change", updateCurrencyPrefix);
        btnCalculate.addEventListener("click", calculate);
        btnReset.addEventListener("click", resetForm);

        // FAQ toggle
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.nextElementSibling;
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((icon) => (icon.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                btn.querySelector("span:last-child").textContent = "−";
              }
            });
          });

        // Init
        updateCurrencyPrefix();
        setMode("cpm");
      })();
    </script>

