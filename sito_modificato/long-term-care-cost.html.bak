    <script>
      // Baseline national median monthly costs (approximate, in today's dollars)
      const BASELINE_COSTS = {
        home: 5500,
        assisted: 5000,
        nursing: 9500,
        memory: 7000,
      };

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function updateSliderOutputs() {
        const costAdjust = document.getElementById("cost-adjust");
        const yearsUntil = document.getElementById("years-until");
        const yearsOfCare = document.getElementById("years-of-care");
        const inflation = document.getElementById("inflation");
        const coverage = document.getElementById("coverage");

        document.getElementById("cost-adjust-output").textContent =
          costAdjust.value + "%";
        document.getElementById("years-until-output").textContent =
          yearsUntil.value;
        document.getElementById("years-of-care-output").textContent =
          yearsOfCare.value;
        document.getElementById("inflation-output").textContent =
          parseFloat(inflation.value).toFixed(1) + "%";
        document.getElementById("coverage-output").textContent =
          coverage.value + "%";
      }

      function calculateLtcCosts() {
        const baselineMode = document.getElementById("baseline-mode").value;
        const careType = document.getElementById("care-type").value;
        const costAdjust =
          parseFloat(document.getElementById("cost-adjust").value) / 100;
        const customMonthly =
          parseFloat(document.getElementById("custom-monthly").value) || 0;
        const yearsUntil =
          parseInt(document.getElementById("years-until").value, 10) || 0;
        const yearsOfCare =
          parseInt(document.getElementById("years-of-care").value, 10) || 0;
        const inflationRate =
          parseFloat(document.getElementById("inflation").value) / 100;
        const coveragePct =
          parseFloat(document.getElementById("coverage").value) / 100;

        // 1. Current monthly cost
        let currentMonthly;
        if (baselineMode === "preset") {
          const base = BASELINE_COSTS[careType] || 0;
          currentMonthly = base * costAdjust;
        } else {
          currentMonthly = customMonthly;
        }

        // 2. Future monthly cost at start of care
        let futureMonthly;
        if (yearsUntil <= 0) {
          futureMonthly = currentMonthly;
        } else {
          futureMonthly =
            currentMonthly * Math.pow(1 + inflationRate, yearsUntil);
        }

        // 3. Total cost of care
        const totalCost = futureMonthly * 12 * Math.max(yearsOfCare, 0);

        // 4. Out-of-pocket share
        const oopCost = totalCost * (1 - coveragePct);

        // 5. Lump sum and monthly saving
        const lumpSum = oopCost;
        let monthlySaving = 0;
        if (yearsUntil > 0) {
          monthlySaving = lumpSum / (yearsUntil * 12);
        }

        // Update UI
        document.getElementById("current-monthly-display").textContent =
          formatCurrency(currentMonthly);
        document.getElementById("future-monthly-display").textContent =
          formatCurrency(futureMonthly);
        document.getElementById("total-cost-display").textContent =
          formatCurrency(totalCost);
        document.getElementById("oop-cost-display").textContent =
          formatCurrency(oopCost);
        document.getElementById("lump-sum-display").textContent =
          formatCurrency(lumpSum);
        document.getElementById("monthly-save-display").textContent =
          yearsUntil > 0 ? formatCurrency(monthlySaving) + "/mo" : "N/A";
      }

      function toggleBaselineSections() {
        const mode = document.getElementById("baseline-mode").value;
        const presetSection = document.getElementById("preset-section");
        const customSection = document.getElementById("custom-section");

        if (mode === "preset") {
          presetSection.classList.remove("hidden");
          customSection.classList.add("hidden");
        } else {
          presetSection.classList.add("hidden");
          customSection.classList.remove("hidden");
        }
      }

      function attachEventListeners() {
        const ids = [
          "baseline-mode",
          "care-type",
          "cost-adjust",
          "custom-monthly",
          "years-until",
          "years-of-care",
          "inflation",
          "coverage",
        ];
        ids.forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          el.addEventListener("input", () => {
            if (id === "baseline-mode") toggleBaselineSections();
            updateSliderOutputs();
            calculateLtcCosts();
          });
          el.addEventListener("change", () => {
            if (id === "baseline-mode") toggleBaselineSections();
            updateSliderOutputs();
            calculateLtcCosts();
          });
        });

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("baseline-mode").value = "preset";
          document.getElementById("care-type").value = "assisted";
          document.getElementById("cost-adjust").value = 100;
          document.getElementById("custom-monthly").value = 6000;
          document.getElementById("years-until").value = 15;
          document.getElementById("years-of-care").value = 4;
          document.getElementById("inflation").value = 3.5;
          document.getElementById("coverage").value = 0;
          toggleBaselineSections();
          updateSliderOutputs();
          calculateLtcCosts();
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        toggleBaselineSections();
        updateSliderOutputs();
        calculateLtcCosts();
        attachEventListeners();
      });

      // Mobile menu script (from template)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
