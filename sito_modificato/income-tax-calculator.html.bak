      let currentPeriod = "annual";

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" +
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function updateIncomePeriodLabel() {
        const map = {
          annual: "(per year)",
          monthly: "(per month)",
          weekly: "(per week)",
          hourly: "(per hour)",
        };
        incomePeriodLabel.textContent = map[currentPeriod] || "(per year)";
        hourlyExtras.classList.toggle("hidden", currentPeriod !== "hourly");
      }

      function syncSlidersFromInputs() {
        const incomeVal = Number(incomeInput.value) || 0;
        incomeSlider.value = Math.min(
          Math.max(incomeVal, Number(incomeSlider.min)),
          Number(incomeSlider.max)
        );
        incomeSliderLabel.textContent = formatCurrency(
          Number(incomeSlider.value)
        );
        const dedVal = Number(deductionsInput.value) || 0;
        deductionSlider.value = Math.min(
          Math.max(dedVal, Number(deductionSlider.min)),
          Number(deductionSlider.max)
        );
        deductionSliderLabel.textContent = formatCurrency(
          Number(deductionSlider.value)
        );
      }

      function syncInputsFromSliders() {
        incomeInput.value = incomeSlider.value;
        incomeSliderLabel.textContent = formatCurrency(
          Number(incomeSlider.value)
        );
        deductionsInput.value = deductionSlider.value;
        deductionSliderLabel.textContent = formatCurrency(
          Number(deductionSlider.value)
        );
      }

      document.querySelectorAll(".income-period-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
