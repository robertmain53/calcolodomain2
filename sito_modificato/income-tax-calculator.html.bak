            b.classList.remove(
              "border-blue-600",
              "text-blue-600",
              "bg-blue-50"
            );
            b.classList.add("border-gray-300", "text-gray-700");
          });
          btn.classList.add("border-blue-600", "text-blue-600", "bg-blue-50");
          btn.classList.remove("border-gray-300", "text-gray-700");
          currentPeriod = btn.dataset.period;
          updateIncomePeriodLabel();
        });
      });

      incomeSlider.addEventListener("input", () => {
        syncInputsFromSliders();
      });
      deductionSlider.addEventListener("input", () => {
        syncInputsFromSliders();
      });

      [incomeInput, deductionsInput].forEach((el) => {
        el.addEventListener("input", () => {
          syncSlidersFromInputs();
        });
      });

      function getAnnualIncome() {
        const base = Number(incomeInput.value) || 0;
        if (base <= 0) return 0;
        switch (currentPeriod) {
          case "annual":
            return base;
          case "monthly":
            return base * 12;
          case "weekly":
            return base * 52;
          case "hourly": {
            const h = Number(hoursPerWeekInput.value) || 0;
            const w = Number(weeksPerYearInput.value) || 0;
            return base * h * w;
          }
          default:
            return base;
        }
      }

      function getTaxConfig() {
        const country = countrySelect.value;
        const year = taxYearSelect.value;
        const status = filingStatusSelect.value;
        const sys =
          TAX_SYSTEMS[country] &&
          TAX_SYSTEMS[country][year] &&
          TAX_SYSTEMS[country][year][status];
        return sys || null;
      }

      function calculateTax() {
        const grossAnnual =
          getAnnualIncome() + (Number(otherTaxableInput.value) || 0);
        if (!grossAnnual || grossAnnual <= 0) {
          calcError.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }
        calcError.classList.add("hidden");

        const config = getTaxConfig();
        let taxableIncome = grossAnnual;
        let brackets = [];
        let standardDeduction = 0;

        const userDeductions = Number(deductionsInput.value) || 0;
        const credits = Number(creditsInput.value) || 0;

        if (countrySelect.value === "us") {
          standardDeduction = config.standardDeduction || 0;
          taxableIncome = Math.max(
            0,
            grossAnnual - standardDeduction - userDeductions
          );
          brackets = config.brackets;
        } else if (countrySelect.value === "uk") {
          const pa = config.personalAllowance || 0;
          const allowance = Math.max(
            0,
            pa - Math.max(0, grossAnnual - 100000) / 2
          );
          taxableIncome = Math.max(0, grossAnnual - allowance - userDeductions);
          brackets = config.brackets;
          standardDeduction = allowance;
        } else {
          standardDeduction = config.standardDeduction || 0;
          taxableIncome = Math.max(
            0,
            grossAnnual - standardDeduction - userDeductions
          );
          brackets = config.brackets;
        }

        let remaining = taxableIncome;
        let lower = 0;
        let totalTax = 0;
        let marginalRate = 0;
        const rows = [];

        for (const b of brackets) {
          if (remaining <= 0) break;
          const upper = b.upTo;
          const taxableInBracket = Math.max(
            0,
            Math.min(remaining, upper - lower)
          );
          const taxHere = taxableInBracket * b.rate;
          if (taxableInBracket > 0) {
            marginalRate = b.rate;
          }
          totalTax += taxHere;
          rows.push({
            range: `${formatCurrency(lower)} – ${
              upper === Infinity ? "∞" : formatCurrency(upper)
            }`,
            taxable: taxableInBracket,
            rate: b.rate,
            tax: taxHere,
          });
          remaining -= taxableInBracket;
          lower = upper;
        }

        totalTax = Math.max(0, totalTax - credits);
        const netAnnual = grossAnnual - totalTax;
        const effectiveRate = totalTax / grossAnnual;

        netPayEl.textContent = formatCurrency(netAnnual);
        totalTaxEl.textContent = formatCurrency(totalTax);
        effectiveRateEl.textContent = `Effective rate: ${formatPercent(
          effectiveRate
        )}`;
        taxableIncomeEl.textContent = formatCurrency(taxableIncome);
        const dedTotal = standardDeduction + userDeductions;
        deductionSummaryEl.textContent =
          dedTotal > 0
            ? `Total deductions: ${formatCurrency(dedTotal)}`
            : "No deductions applied";
        marginalRateEl.textContent = formatPercent(marginalRate);

        const netPct = Math.max(0, Math.min(1, netAnnual / grossAnnual));
        netBar.style.width = (netPct * 100).toFixed(1) + "%";
        netVsTaxLabel.textContent = `${formatPercent(
          netPct
        )} net, ${formatPercent(1 - netPct)} tax`;

        let perLabel = "";
        switch (currentPeriod) {
          case "annual":
            perLabel = "per year";
            break;
          case "monthly":
            perLabel = "per month";
            break;
          case "weekly":
            perLabel = "per week";
            break;
          case "hourly":
            perLabel = "per year (from hourly)";
            break;
        }
        netPayPeriodEl.textContent = perLabel;

        bracketTableBody.innerHTML = "";
        if (rows.length === 0) {
          const tr = document.createElement("tr");
          tr.innerHTML =
            '<td colspan="4" class="px-3 py-2 text-center text-gray-500">No taxable income.</td>';
          bracketTableBody.appendChild(tr);
        } else {
          rows.forEach((r) => {
            const tr = document.createElement("tr");
            tr.className = "border-t border-gray-200";
            tr.innerHTML = `
          <td class="px-3 py-2 whitespace-nowrap text-gray-700">${r.range}</td>
          <td class="px-3 py-2 text-right text-gray-700">${formatCurrency(
            r.taxable
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${formatPercent(
            r.rate
          )}</td>
          <td class="px-3 py-2 text-right text-gray-900 font-medium">${formatCurrency(
            r.tax
          )}</td>
        `;
            bracketTableBody.appendChild(tr);
          });
        }

        resultsSection.classList.remove("hidden");
      }

      calcBtn.addEventListener("click", calculateTax);

      resetBtn.addEventListener("click", () => {
        countrySelect.value = "us";
        taxYearSelect.value = "2024";
        filingStatusSelect.value = "single";
        currentPeriod = "annual";
        document.querySelectorAll(".income-period-btn").forEach((b) => {
          b.classList.remove("border-blue-600", "text-blue-600", "bg-blue-50");
          b.classList.add("border-gray-300", "text-gray-700");
          if (b.dataset.period === "annual") {
            b.classList.add("border-blue-600", "text-blue-600", "bg-blue-50");
            b.classList.remove("border-gray-300", "text-gray-700");
          }
        });
        incomeInput.value = 60000;
        deductionsInput.value = 0;
        creditsInput.value = 0;
        otherTaxableInput.value = 0;
        hoursPerWeekInput.value = 40;
        weeksPerYearInput.value = 52;
        hourlyExtras.classList.add("hidden");
        syncSlidersFromInputs();
        resultsSection.classList.add("hidden");
        calcError.classList.add("hidden");
      });

      // Initial setup
      updateIncomePeriodLabel();
      syncSlidersFromInputs();
    </script>

