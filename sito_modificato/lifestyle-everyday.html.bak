<script>
  // Mini lifestyle planner logic
  (function () {
    const toggleBtn = document.getElementById('toggle-planner');
    const panel = document.getElementById('planner-panel');
    const calcBtn = document.getElementById('planner-calc');
    const summary = document.getElementById('planner-summary');

    if (!toggleBtn || !panel || !calcBtn || !summary) return;

    toggleBtn.addEventListener('click', () => {
      const isHidden = panel.classList.contains('hidden');
      panel.classList.toggle('hidden', !isHidden);
      toggleBtn.textContent = isHidden ? 'Close planner' : 'Open planner';
    });

    function parseNumber(id) {
      const el = document.getElementById(id);
      if (!el) return 0;
      const v = parseFloat(el.value.replace(',', '.'));
      return isNaN(v) ? 0 : v;
    }

    calcBtn.addEventListener('click', () => {
      const S = parseNumber('sleep-hours');
      const W = parseNumber('work-hours');
      const B = parseNumber('daily-budget');
      const P = parseNumber('planned-spend');
      const G = parseNumber('steps-goal');
      const T = parseNumber('steps-today');

      let freeTime = 24 - S - W;
      if (!isFinite(freeTime)) freeTime = 0;

      const spendRatio = B > 0 ? P / B : 0;
      const leftover = B - P;
      const stepsRatio = G > 0 ? T / G : 0;

      function pct(x) {
        return (x * 100).toFixed(0) + '%';
      }

      const parts = [];

      parts.push(`Free time: ${freeTime.toFixed(1)} h/day`);
      if (B > 0) {
        parts.push(`Budget used: ${pct(Math.max(0, Math.min(spendRatio, 2)))} (${leftover >= 0 ? '$' + leftover.toFixed(0) + ' left' : '$' + Math.abs(leftover).toFixed(0) + ' over'})`);
      }
      if (G > 0) {
        parts.push(`Steps: ${pct(Math.max(0, Math.min(stepsRatio, 2)))} of goal`);
      }

      summary.textContent = parts.join(' • ');
    });
  })();
</script>

