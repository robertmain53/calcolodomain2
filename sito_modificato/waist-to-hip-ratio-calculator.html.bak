    <script>
      (function () {
        const sexButtons = document.querySelectorAll(".sex-btn");
        const unitButtons = document.querySelectorAll(".unit-btn");
        const waistInput = document.getElementById("waist-input");
        const hipInput = document.getElementById("hip-input");
        const waistUnitLabel = document.getElementById("waist-unit-label");
        const hipUnitLabel = document.getElementById("hip-unit-label");
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorEl = document.getElementById("input-error");

        const whrValueEl = document.getElementById("whr-value");
        const whrCategoryEl = document.getElementById("whr-category");
        const whrRiskLabelEl = document.getElementById("whr-risk-label");
        const whrRiskBarEl = document.getElementById("whr-risk-bar");
        const whrInterpretationEl =
          document.getElementById("whr-interpretation");

        let currentSex = "female";
        let currentUnit = "metric";

        function setActive(buttons, value, attr) {
          buttons.forEach((btn) => {
            if (btn.getAttribute(attr) === value) {
              btn.classList.remove(
                "bg-white",
                "border-gray-300",
                "text-gray-700"
              );
              btn.classList.add(
                "bg-blue-50",
                "border-blue-500",
                "text-blue-700"
              );
            } else {
              btn.classList.add("bg-white", "border-gray-300", "text-gray-700");
              btn.classList.remove(
                "bg-blue-50",
                "border-blue-500",
                "text-blue-700"
              );
            }
          });
        }

        sexButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentSex = btn.getAttribute("data-sex");
            setActive(sexButtons, currentSex, "data-sex");
            if (whrValueEl.textContent && whrValueEl.textContent !== "–") {
              calculate(); // re-interpret for new sex
            }
          });
        });

        unitButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentUnit = btn.getAttribute("data-unit");
            setActive(unitButtons, currentUnit, "data-unit");
            const unitText = currentUnit === "metric" ? "(cm)" : "(in)";
            waistUnitLabel.textContent = unitText;
            hipUnitLabel.textContent = unitText;
          });
        });

        function classifyWHR(sex, whr) {
          let category = "Unknown";
          let risk = "Unknown";
          let color = {
            bg: "bg-gray-100",
            text: "text-gray-700",
            border: "border-gray-200",
            bar: "bg-gray-400",
          };
          let barWidth = "0%";

          if (!isFinite(whr) || whr <= 0) {
            return { category, risk, color, barWidth };
          }

          if (sex === "female") {
            if (whr < 0.8) {
              category = "Low";
              risk = "Low risk";
              color = {
                bg: "bg-green-100",
                text: "text-green-800",
                border: "border-green-300",
                bar: "bg-green-500",
              };
              barWidth = "25%";
            } else if (whr < 0.85) {
              category = "Moderate";
              risk = "Moderate risk";
              color = {
                bg: "bg-amber-100",
                text: "text-amber-800",
                border: "border-amber-300",
                bar: "bg-amber-500",
              };
              barWidth = "60%";
            } else {
              category = "High";
              risk = "High risk";
              color = {
                bg: "bg-red-100",
                text: "text-red-800",
                border: "border-red-300",
                bar: "bg-red-500",
              };
              barWidth = "90%";
            }
          } else {
            if (whr < 0.9) {
              category = "Low";
              risk = "Low risk";
              color = {
                bg: "bg-green-100",
                text: "text-green-800",
                border: "border-green-300",
                bar: "bg-green-500",
              };
              barWidth = "25%";
            } else if (whr < 1.0) {
              category = "Moderate";
              risk = "Moderate risk";
              color = {
                bg: "bg-amber-100",
                text: "text-amber-800",
                border: "border-amber-300",
                bar: "bg-amber-500",
              };
              barWidth = "60%";
            } else {
              category = "High";
              risk = "High risk";
              color = {
                bg: "bg-red-100",
                text: "text-red-800",
                border: "border-red-300",
                bar: "bg-red-500",
              };
              barWidth = "90%";
            }
          }

          return { category, risk, color, barWidth };
        }

        function clearError() {
          errorEl.textContent = "";
          errorEl.classList.add("hidden");
        }

        function showError(msg) {
          errorEl.textContent = msg;
          errorEl.classList.remove("hidden");
        }

        function calculate() {
          clearError();
          const waist = parseFloat(waistInput.value);
          const hip = parseFloat(hipInput.value);

          if (isNaN(waist) || isNaN(hip)) {
            showError("Please enter both waist and hip measurements.");
            return;
          }
          if (waist <= 0 || hip <= 0) {
            showError("Measurements must be greater than zero.");
            return;
          }
          if (waist > 400 || hip > 400) {
            showError(
              "Please check your measurements – they seem unusually large."
            );
            return;
          }

          const whr = waist / hip;
          const whrRounded = Math.round(whr * 100) / 100;

          whrValueEl.textContent = whrRounded.toFixed(2);

          const { category, risk, color, barWidth } = classifyWHR(
            currentSex,
            whr
          );

          whrCategoryEl.textContent = category || "Not classified";
          whrRiskLabelEl.textContent = risk || "–";

          // Reset classes
          whrCategoryEl.className =
            "mt-1 result-badge border " +
            color.bg +
            " " +
            color.text +
            " " +
            color.border;
          whrRiskBarEl.className =
            "h-2 transition-all duration-300 " + color.bar;
          whrRiskBarEl.style.width = barWidth;

          let sexLabel = currentSex === "female" ? "women" : "men";
          whrInterpretationEl.textContent =
            `Your waist to hip ratio is ${whrRounded.toFixed(
              2
            )}, which falls into the "${category}" category for ${sexLabel}, ` +
            `${risk.toLowerCase()} of cardiovascular and metabolic complications according to common WHO cut-offs.`;
        }

        calcBtn.addEventListener("click", calculate);

        resetBtn.addEventListener("click", () => {
          waistInput.value = "";
          hipInput.value = "";
          clearError();
          whrValueEl.textContent = "–";
          whrCategoryEl.textContent = "Not calculated";
          whrCategoryEl.className =
            "mt-1 result-badge bg-gray-100 text-gray-700 border border-gray-200";
          whrRiskLabelEl.textContent = "–";
          whrRiskBarEl.style.width = "0%";
          whrRiskBarEl.className =
            "h-2 w-0 bg-gray-400 transition-all duration-300";
          whrInterpretationEl.textContent =
            "Enter your measurements and click “Calculate WHR” to see your result.";
        });

        // Allow Enter key to trigger calculation
        [waistInput, hipInput].forEach((input) => {
          input.addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              calculate();
            }
          });
        });
      })();
    </script>

