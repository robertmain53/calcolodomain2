    <script>
      // Slugging percentage calculator logic
      function toInt(value) {
        const n = Number(value);
        if (!Number.isFinite(n) || n < 0) return 0;
        return Math.floor(n);
      }

      function interpretSLG(slg) {
        if (!Number.isFinite(slg) || slg < 0)
          return "Enter valid stats to see how this slugging percentage compares to typical MLB ranges.";
        if (slg < 0.4)
          return "Below-average power. This slugging percentage is low compared to typical MLB hitters.";
        if (slg < 0.45)
          return "Modest power. Slightly below modern MLB league-average slugging percentage.";
        if (slg < 0.5)
          return "Around league average power. Respectable but not standout slugging percentage.";
        if (slg < 0.55)
          return "Good power hitter. This slugging percentage is clearly above average.";
        if (slg < 0.6)
          return "Excellent power. This slugging percentage would rank among the better sluggers in most seasons.";
        return "Elite power. A slugging percentage this high is MVP-level in most eras, especially over a full season.";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const abInput = document.getElementById("ab");
        const singlesInput = document.getElementById("singles");
        const doublesInput = document.getElementById("doubles");
        const triplesInput = document.getElementById("triples");
        const hrInput = document.getElementById("hr");
        const hitsInput = document.getElementById("hits");

        const slgDisplay = document.getElementById("slg-display");
        const tbDisplay = document.getElementById("tb-display");
        const hitsCheckDisplay = document.getElementById("hits-check-display");
        const interpretationEl = document.getElementById("slg-interpretation");
        const errorMsg = document.getElementById("error-msg");

        const calcBtn = document.getElementById("calc-btn");
        const clearBtn = document.getElementById("clear-btn");

        function calculateSLG() {
          errorMsg.classList.add("hidden");
          errorMsg.textContent = "";

          const ab = toInt(abInput.value);
          let singles = toInt(singlesInput.value);
          const doubles = toInt(doublesInput.value);
          const triples = toInt(triplesInput.value);
          const hr = toInt(hrInput.value);
          const hits = toInt(hitsInput.value);

          if (ab === 0) {
            slgDisplay.textContent = "0.000";
            tbDisplay.textContent = "0";
            hitsCheckDisplay.textContent = "0";
            interpretationEl.textContent =
              "At-bats (AB) must be greater than zero to compute slugging percentage.";
            return;
          }

          // If total hits is provided and greater than 0, try to infer singles if singles is 0
          if (hits > 0 && singles === 0) {
            const inferredSingles = hits - doubles - triples - hr;
            if (inferredSingles < 0) {
              errorMsg.textContent =
                "Total hits (H) is less than the sum of doubles, triples, and home runs. Please correct the inputs.";
              errorMsg.classList.remove("hidden");
              return;
            }
            singles = inferredSingles;
            singlesInput.value = inferredSingles;
          }

          const totalBases = singles + 2 * doubles + 3 * triples + 4 * hr;
          const hitsCheck = singles + doubles + triples + hr;

          if (hits > 0 && hits !== hitsCheck) {
            // Soft warning but still compute
            errorMsg.textContent =
              "Note: Total hits (H) does not match 1B+2B+3B+HR. The calculator uses the detailed breakdown for SLG.";
            errorMsg.classList.remove("hidden");
          }

          const slg = totalBases / ab;
          const slgRounded = Number.isFinite(slg) ? slg.toFixed(3) : "0.000";

          slgDisplay.textContent = slgRounded;
          tbDisplay.textContent = totalBases.toString();
          hitsCheckDisplay.textContent = hitsCheck.toString();
          interpretationEl.textContent = interpretSLG(slg);
        }

        function clearFields() {
          [
            abInput,
            singlesInput,
            doublesInput,
            triplesInput,
            hrInput,
            hitsInput,
          ].forEach((el) => (el.value = "0"));
          slgDisplay.textContent = "0.000";
          tbDisplay.textContent = "0";
          hitsCheckDisplay.textContent = "0";
          interpretationEl.textContent =
            "Enter stats and click “Calculate SLG” to see how this compares to typical MLB ranges.";
          errorMsg.textContent = "";
          errorMsg.classList.add("hidden");
        }

        calcBtn.addEventListener("click", calculateSLG);
        clearBtn.addEventListener("click", clearFields);

        // Allow Enter key to trigger calculation
        [
          abInput,
          singlesInput,
          doublesInput,
          triplesInput,
          hrInput,
          hitsInput,
        ].forEach((el) => {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              calculateSLG();
            }
          });
        });

        const faqQuestions = document.querySelectorAll(
          "#faq-container .faq-question"
        );
        faqQuestions.forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((icon) => (icon.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              btn.querySelector("span:last-child").textContent = "−";
            }
          });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
