          termInput.value = Math.max(1, Math.round(val * 12) || 60);
          termRange.value = Math.max(
            1,
            Math.min(7, Math.round(termInput.value / 12))
          );
        }
      }
      termYearsBtn.addEventListener("click", () => setTermMode("years"));
      termMonthsBtn.addEventListener("click", () => setTermMode("months"));

      // Fee mode toggle
      function setFeeMode(mode) {
        feeMode = mode;
        if (mode === "percent") {
          feePercentBtn.classList.add("tab-active");
          feePercentBtn.classList.remove("tab-inactive");
          feeFixedBtn.classList.add("tab-inactive");
          feeFixedBtn.classList.remove("tab-active");
          feeUnitLabel.textContent = "%";
          if (Number(feeInput.value) > 100) feeInput.value = 0;
        } else {
          feeFixedBtn.classList.add("tab-active");
          feeFixedBtn.classList.remove("tab-inactive");
          feePercentBtn.classList.add("tab-inactive");
          feePercentBtn.classList.remove("tab-active");
          feeUnitLabel.textContent = "$";
        }
      }
      feePercentBtn.addEventListener("click", () => setFeeMode("percent"));
      feeFixedBtn.addEventListener("click", () => setFeeMode("fixed"));

      // Calc mode toggle
      function setCalcMode(mode) {
        calcMode = mode;
        if (mode === "payment") {
          tabByPayment.classList.add("tab-active");
          tabByPayment.classList.remove("tab-inactive");
          tabByAmount.classList.add("tab-inactive");
          tabByAmount.classList.remove("tab-active");
          targetPaymentWrapper.classList.add("hidden");
          loanAmountInput.disabled = false;
          loanAmountRange.disabled = false;
        } else {
          tabByAmount.classList.add("tab-active");
          tabByAmount.classList.remove("tab-inactive");
          tabByPayment.classList.add("tab-inactive");
          tabByPayment.classList.remove("tab-active");
          targetPaymentWrapper.classList.remove("hidden");
          loanAmountInput.disabled = true;
          loanAmountRange.disabled = true;
        }
      }
      tabByPayment.addEventListener("click", () => setCalcMode("payment"));
      tabByAmount.addEventListener("click", () => setCalcMode("amount"));

      // Core calculation
      function calculate() {
        let P = Math.max(0, Number(loanAmountInput.value) || 0);
        const apr = Math.max(0, Number(aprInput.value) || 0);
        const extra = Math.max(0, Number(extraPaymentInput.value) || 0);

        let n;
        if (termMode === "years") {
          const years = Math.max(0.1, Number(termInput.value) || 0);
          n = Math.round(years * 12);
        } else {
          n = Math.max(1, Math.round(Number(termInput.value) || 0));
        }

        const r = apr / 100 / 12;

        // Fee
        let fee = 0;
        if (feeMode === "percent") {
          const pct = Math.max(0, Number(feeInput.value) || 0);
          fee = (P * pct) / 100;
        } else {
          fee = Math.max(0, Number(feeInput.value) || 0);
        }

        let M; // required monthly payment
        if (calcMode === "payment") {
          // Solve for payment given P
          if (r === 0) {
            M = P / n;
          } else {
            const pow = Math.pow(1 + r, n);
            M = (P * r * pow) / (pow - 1);
          }
        } else {
          // Solve for amount given target payment
          const target = Math.max(1, Number(targetPaymentInput.value) || 0);
          if (r === 0) {
            P = target * n;
          } else {
            const pow = Math.pow(1 + r, n);
            P = (target * (pow - 1)) / (r * pow);
          }
          loanAmountInput.value = Math.round(P);
          loanAmountRange.value = Math.min(
            Math.max(P, loanAmountRange.min),
            loanAmountRange.max
          );
          if (r === 0) {
            M = target; // same
          } else {
            M = target;
          }
        }

        // Baseline schedule (no extra)
        const baseline = buildSchedule(P, r, n, 0, M);
        const baselineInterest = baseline.totalInterest;
        const baselineMonths = baseline.payments.length;

        // Schedule with extra payment
        const withExtra = buildSchedule(P, r, n, extra, M);
        const totalInterest = withExtra.totalInterest;
        const totalPaid = withExtra.totalPaid;
        const monthsActual = withExtra.payments.length;

        // Effective APR (rough): internal rate of return on cash flows with fee deducted upfront
        const netProceeds = P - fee;
        const effApr = estimateEffectiveApr(netProceeds, withExtra.payments);

        // Update results
        resultMonthlyPayment.textContent = fmtCurrency(M + extra);
        resultMonths.textContent = monthsActual.toString();
        resultTotalInterest.textContent = fmtCurrency(totalInterest);
        resultFee.textContent = fmtCurrency(fee);
        resultTotalCost.textContent = fmtCurrency(totalInterest + fee);
        resultTotalPaid.textContent = fmtCurrency(totalPaid + fee);
        resultEffectiveApr.textContent = fmtPercent(effApr / 100);

        const interestSaved = Math.max(0, baselineInterest - totalInterest);
        const timeSaved = Math.max(0, baselineMonths - monthsActual);
        resultInterestSaved.textContent = fmtCurrency(interestSaved);
        resultTimeSaved.textContent = timeSaved + " months";

        // Update bar chart
        const principalPortion = P;
        const interestPortion = totalInterest;
        const totalCost = principalPortion + interestPortion;
        const principalPct =
          totalCost > 0 ? (principalPortion / totalCost) * 100 : 0;
        const interestPct =
          totalCost > 0 ? (interestPortion / totalCost) * 100 : 0;
        barPrincipal.style.width = principalPct + "%";
        barInterest.style.width = interestPct + "%";
        labelPrincipal.textContent =
          "Principal: " + principalPct.toFixed(1) + "%";
        labelInterest.textContent = "Interest: " + interestPct.toFixed(1) + "%";

        // Build amortization table (with extra)
        buildAmortizationTable(withExtra.payments);
      }

      function buildSchedule(P, r, n, extra, paymentOverride) {
        let balance = P;
        const payments = [];
        let totalInterest = 0;
        let totalPaid = 0;

        let M;
        if (typeof paymentOverride === "number") {
          M = paymentOverride;
        } else {
          if (r === 0) {
            M = P / n;
          } else {
            const pow = Math.pow(1 + r, n);
            M = (P * r * pow) / (pow - 1);
          }
        }

        let month = 0;
        const maxIter = n + 240; // safety cap
        while (balance > 0.01 && month < maxIter) {
          month++;
          const interest = balance * r;
          let principal = M - interest + extra;
          if (principal > balance + interest) {
            principal = balance;
          }
          const payment = principal + interest;
          balance -= principal;
          totalInterest += interest;
          totalPaid += payment;
          payments.push({
            month,
            payment,
            principal,
            interest,
            balance: Math.max(0, balance),
          });
          if (balance <= 0.01) break;
        }

        return { payments, totalInterest, totalPaid };
      }

      // Simple IRR solver for effective APR (monthly -> annual)
      function estimateEffectiveApr(netProceeds, payments) {
        if (netProceeds <= 0 || payments.length === 0)
          return Number(aprInput.value) || 0;
        const cashFlows = [-netProceeds];
        payments.forEach((p) => cashFlows.push(p.payment));

        // Newton-Raphson on monthly rate
        let rate = (Number(aprInput.value) || 0) / 100 / 12;
        rate = Math.max(rate, 0.0001);
        for (let i = 0; i < 20; i++) {
          let npv = 0;
          let dNpv = 0;
          for (let t = 0; t < cashFlows.length; t++) {
            const cf = cashFlows[t];
            const denom = Math.pow(1 + rate, t);
            npv += cf / denom;
            if (t > 0) {
              dNpv -= (t * cf) / (denom * (1 + rate));
            }
          }
          if (Math.abs(npv) < 1e-6) break;
          const delta = npv / dNpv;
          rate -= delta;
          if (rate < 0) {
            rate = 0.0001;
            break;
          }
        }
        const annual = (Math.pow(1 + rate, 12) - 1) * 100;
        if (!isFinite(annual) || annual <= 0)
          return Number(aprInput.value) || 0;
        return annual;
      }

      function buildAmortizationTable(payments) {
        amortizationBody.innerHTML = "";
        const frag = document.createDocumentFragment();
        payments.forEach((p) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 text-gray-700">${p.month}</td>
        <td class="px-3 py-1 text-right text-gray-700">${fmtCurrency(
          p.payment
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${fmtCurrency(
          p.principal
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${fmtCurrency(
          p.interest
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${fmtCurrency(
          p.balance
        )}</td>
      `;
          frag.appendChild(tr);
        });
        amortizationBody.appendChild(frag);
      }

      // Toggle amortization visibility
      toggleAmortizationBtn.addEventListener("click", () => {
        const isHidden = amortizationContainer.classList.contains("hidden");
        if (isHidden) {
          amortizationContainer.classList.remove("hidden");
          toggleAmortizationBtn.textContent = "Hide full schedule";
        } else {
          amortizationContainer.classList.add("hidden");
          toggleAmortizationBtn.textContent = "Show full schedule";
        }
      });

      // Reset
      resetBtn.addEventListener("click", () => {
        loanAmountInput.value = 15000;
        loanAmountRange.value = 15000;
        aprInput.value = 12;
        aprRange.value = 12;
        termInput.value = 5;
        termRange.value = 5;
        setTermMode("years");
        feeInput.value = 0;
        setFeeMode("percent");
        extraPaymentInput.value = 0;
        targetPaymentInput.value = 350;
        setCalcMode("payment");
        calculate();
      });

      calculateBtn.addEventListener("click", calculate);

      // Initial calc
      document.addEventListener("DOMContentLoaded", calculate);
    </script>

