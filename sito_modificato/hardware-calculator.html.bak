          dutyCycle.value = 60;
          retentionDays.value = 14;
          safetyMargin.value = 20;
          raidLevel.value = "raid1";
          driveSize.value = 8;
          maxStreamsPerServer.value = 16;
        } else if (preset === "medium") {
          numCameras.value = 32;
          resolution.value = "1080p";
          codec.value = "h265";
          frameRate.value = 15;
          sceneComplexity.value = "medium";
          recordingHours.value = 24;
          dutyCycle.value = 80;
          retentionDays.value = 30;
          safetyMargin.value = 25;
          raidLevel.value = "raid5";
          driveSize.value = 12;
          maxStreamsPerServer.value = 64;
        } else if (preset === "large") {
          numCameras.value = 128;
          resolution.value = "4MP";
          codec.value = "h265";
          frameRate.value = 20;
          sceneComplexity.value = "high";
          recordingHours.value = 24;
          dutyCycle.value = 90;
          retentionDays.value = 60;
          safetyMargin.value = 30;
          raidLevel.value = "raid6";
          driveSize.value = 18;
          maxStreamsPerServer.value = 64;
        }
      }

      function resetCalculator() {
        document.getElementById("numCameras").value = 32;
        document.getElementById("resolution").value = "1080p";
        document.getElementById("codec").value = "h265";
        document.getElementById("frameRate").value = 15;
        document.getElementById("sceneComplexity").value = "medium";
        document.getElementById("recordingHours").value = 24;
        document.getElementById("dutyCycle").value = 100;
        document.getElementById("retentionDays").value = 30;
        document.getElementById("safetyMargin").value = 25;
        document.getElementById("raidLevel").value = "raid5";
        document.getElementById("driveSize").value = 12;
        document.getElementById("maxStreamsPerServer").value = 64;

        const ids = [
          "perCameraBitrate",
          "totalRecordingBitrate",
          "totalLiveBitrate",
          "perClientBitrate",
          "storagePerCamera",
          "totalUsableStorage",
          "totalRawStorage",
          "driveCount",
          "serverCount",
          "cpuClass",
          "cpuCores",
          "ramAmount",
          "driveBays",
        ];
        ids.forEach((id) => (document.getElementById(id).textContent = "–"));
        document.getElementById("hardwareSummary").textContent =
          "Run a calculation to see hardware recommendations.";
        document.getElementById("calcError").classList.add("hidden");
      }

      function calculate() {
        const numCameras = parseInt(
          document.getElementById("numCameras").value,
          10
        );
        const resolution = document.getElementById("resolution").value;
        const codec = document.getElementById("codec").value;
        const frameRate = parseFloat(
          document.getElementById("frameRate").value
        );
        const sceneComplexity =
          document.getElementById("sceneComplexity").value;
        const recordingHours = parseFloat(
          document.getElementById("recordingHours").value
        );
        const dutyCycle = parseFloat(
          document.getElementById("dutyCycle").value
        );
        const retentionDays = parseFloat(
          document.getElementById("retentionDays").value
        );
        const safetyMargin = parseFloat(
          document.getElementById("safetyMargin").value
        );
        const raidLevel = document.getElementById("raidLevel").value;
        const driveSize = parseFloat(
          document.getElementById("driveSize").value
        );
        const maxStreamsPerServer = parseInt(
          document.getElementById("maxStreamsPerServer").value,
          10
        );

        const errorEl = document.getElementById("calcError");

        if (
          !Number.isFinite(numCameras) ||
          numCameras <= 0 ||
          !Number.isFinite(frameRate) ||
          frameRate <= 0 ||
          !Number.isFinite(recordingHours) ||
          recordingHours < 0 ||
          recordingHours > 24 ||
          !Number.isFinite(dutyCycle) ||
          dutyCycle <= 0 ||
          dutyCycle > 100 ||
          !Number.isFinite(retentionDays) ||
          retentionDays <= 0 ||
          !Number.isFinite(safetyMargin) ||
          safetyMargin < 0 ||
          !Number.isFinite(driveSize) ||
          driveSize <= 0 ||
          !Number.isFinite(maxStreamsPerServer) ||
          maxStreamsPerServer <= 0
        ) {
          errorEl.classList.remove("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        // 1. Bitrate per camera
        const baseMbps = getBaseBitrate(resolution, codec, sceneComplexity);
        const fpsFactor = frameRate / 15;
        const dutyFactor = dutyCycle / 100;
        const perCameraMbps = baseMbps * fpsFactor * dutyFactor;

        const totalRecordingMbps = perCameraMbps * numCameras;
        const totalLiveMbps = totalRecordingMbps; // same stream assumption
        const perClientMbps = perCameraMbps * 4; // assume 4 cameras per remote client

        // 2. Storage
        // Convert Mbps to MB/s: Mbps * 10^6 / 8 / 10^6 = Mbps / 8 MB/s
        const perCameraMBps = perCameraMbps / 8;
        const perCameraGBPerDay =
          (perCameraMBps * 3600 * recordingHours) / 1024; // 1024 MB per GB
        const perCameraGBTotal = perCameraGBPerDay * retentionDays;
        const totalUsableGB = perCameraGBTotal * numCameras;

        const marginFactor = 1 + safetyMargin / 100;
        const raidFactor = getRaidFactor(raidLevel);
        const totalRawGB = totalUsableGB * marginFactor * raidFactor;

        const totalUsableTB = totalUsableGB / 1024;
        const totalRawTB = totalRawGB / 1024;

        const driveCount = totalRawTB / driveSize;
        const driveCountRounded = Math.ceil(driveCount);

        // 3. Hardware per server
        const servers = Math.ceil(numCameras / maxStreamsPerServer);
        const camsPerServer = numCameras / servers;
        const mbpsPerServer = totalRecordingMbps / servers;

        const cpuClass = getCpuClass(camsPerServer, mbpsPerServer);
        const cpuCores = getCpuCores(mbpsPerServer);
        const ramGB = getRamAmount(camsPerServer);

        const rawTBPerServer = totalRawTB / servers;
        const driveBays = Math.ceil(rawTBPerServer / driveSize);

        // 4. Update UI
        document.getElementById("perCameraBitrate").textContent =
          formatMbps(perCameraMbps);
        document.getElementById("totalRecordingBitrate").textContent =
          formatMbps(totalRecordingMbps);
        document.getElementById("totalLiveBitrate").textContent =
          formatMbps(totalLiveMbps);
        document.getElementById("perClientBitrate").textContent =
          formatMbps(perClientMbps);

        document.getElementById("storagePerCamera").textContent =
          formatGB(perCameraGBTotal);
        document.getElementById("totalUsableStorage").textContent =
          formatTB(totalUsableTB);
        document.getElementById("totalRawStorage").textContent =
          formatTB(totalRawTB);
        document.getElementById("driveCount").textContent =
          formatCount(driveCountRounded);

        document.getElementById("serverCount").textContent =
          formatCount(servers);
        document.getElementById("cpuClass").textContent = cpuClass;
        document.getElementById("cpuCores").textContent = cpuCores + " cores";
        document.getElementById("ramAmount").textContent = ramGB + " GB";
        document.getElementById("driveBays").textContent =
          driveBays > 0 ? driveBays + " bays" : "–";

        const summary = `For ${numCameras} cameras at ${resolution}, ${codec.toUpperCase()}, ${frameRate} fps and ${retentionDays} days retention, you need approximately ${totalRawTB.toFixed(
          2
        )} TB of raw storage and ${servers} NVR/server(s).`;
        document.getElementById("hardwareSummary").textContent = summary;
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculate);
        document
          .getElementById("resetBtn")
          .addEventListener("click", resetCalculator);

        document.querySelectorAll("button[data-preset]").forEach((btn) => {
          btn.addEventListener("click", function () {
            const preset = this.getAttribute("data-preset");
            applyPreset(preset);
            calculate();
          });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
