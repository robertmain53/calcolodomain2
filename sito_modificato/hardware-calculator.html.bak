    <script>
      // Utility functions
      function clamp(value, min, max) {
        return Math.min(Math.max(value, min), max);
      }

      function formatMbps(value) {
        if (!isFinite(value) || value <= 0) return "–";
        if (value < 1) return (value * 1000).toFixed(0) + " kbps";
        return value.toFixed(2) + " Mbps";
      }

      function formatGB(value) {
        if (!isFinite(value) || value <= 0) return "–";
        if (value < 1) return (value * 1024).toFixed(1) + " MB";
        if (value >= 1024) return (value / 1024).toFixed(2) + " TB";
        return value.toFixed(1) + " GB";
      }

      function formatTB(value) {
        if (!isFinite(value) || value <= 0) return "–";
        return value.toFixed(2) + " TB";
      }

      function formatCount(value) {
        if (!isFinite(value) || value <= 0) return "–";
        return value.toFixed(0);
      }

      function getBaseBitrate(resolution, codec, complexity) {
        // Mbps at 15 fps, 100% duty, medium scene
        const table = {
          "720p": {
            h264: { low: 1.5, medium: 2.0, high: 3.0 },
            h265: { low: 0.9, medium: 1.3, high: 2.0 },
          },
          "1080p": {
            h264: { low: 3.0, medium: 4.0, high: 6.0 },
            h265: { low: 1.8, medium: 2.5, high: 3.8 },
          },
          "4MP": {
            h264: { low: 4.5, medium: 6.0, high: 9.0 },
            h265: { low: 2.5, medium: 3.5, high: 5.5 },
          },
          "4K": {
            h264: { low: 8.0, medium: 10.0, high: 15.0 },
            h265: { low: 4.5, medium: 6.5, high: 9.5 },
          },
        };
        const resKey = resolution in table ? resolution : "1080p";
        const codecKey = codec === "h265" ? "h265" : "h264";
        const compKey = ["low", "medium", "high"].includes(complexity)
          ? complexity
          : "medium";
        return table[resKey][codecKey][compKey];
      }

      function getRaidFactor(raidLevel) {
        switch (raidLevel) {
          case "raid1":
            return 2.0;
          case "raid5":
            return 1.2;
          case "raid6":
            return 1.33;
          case "raid10":
            return 2.0;
          default:
            return 1.0;
        }
      }

      function getCpuClass(camsPerServer, totalMbpsPerServer) {
        if (camsPerServer <= 16 && totalMbpsPerServer <= 50)
          return "Entry-level (Intel i3 / low-end Xeon / Ryzen 3)";
        if (camsPerServer <= 64 && totalMbpsPerServer <= 250)
          return "Mid-range (Intel i5/i7 / Xeon Silver / Ryzen 5–7)";
        if (camsPerServer <= 128 && totalMbpsPerServer <= 500)
          return "High-end (Xeon Gold / Ryzen 9 / EPYC)";
        return "Enterprise (dual-socket Xeon/EPYC, hardware-accelerated video where supported)";
      }

      function getCpuCores(totalMbpsPerServer) {
        // 4 cores base + 1 core per 50 Mbps, capped 4–32
        const cores = 4 + Math.ceil(totalMbpsPerServer / 50);
        return clamp(cores, 4, 32);
      }

      function getRamAmount(camsPerServer) {
        // 8 GB base + 0.5 GB per 10 cameras
        const gb = 8 + (camsPerServer / 10) * 0.5;
        // Round to nearest 2 GB
        return Math.ceil(gb / 2) * 2;
      }

      function applyPreset(preset) {
        const numCameras = document.getElementById("numCameras");
        const resolution = document.getElementById("resolution");
        const codec = document.getElementById("codec");
        const frameRate = document.getElementById("frameRate");
        const sceneComplexity = document.getElementById("sceneComplexity");
        const recordingHours = document.getElementById("recordingHours");
        const dutyCycle = document.getElementById("dutyCycle");
        const retentionDays = document.getElementById("retentionDays");
        const safetyMargin = document.getElementById("safetyMargin");
        const raidLevel = document.getElementById("raidLevel");
        const driveSize = document.getElementById("driveSize");
        const maxStreamsPerServer = document.getElementById(
          "maxStreamsPerServer"
        );

        if (preset === "small") {
          numCameras.value = 8;
