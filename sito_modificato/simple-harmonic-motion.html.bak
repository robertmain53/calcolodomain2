    <script>
      // Simple line plotting without external libraries
      function plotLine(canvasId, xs, ys, yLabel) {
        const canvas = document.getElementById(canvasId);
        if (!canvas) return;
        const ctx = canvas.getContext("2d");
        const w = (canvas.width = canvas.clientWidth);
        const h = (canvas.height = canvas.clientHeight);

        ctx.clearRect(0, 0, w, h);

        if (!xs.length || !ys.length) return;

        const minX = Math.min(...xs);
        const maxX = Math.max(...xs);
        const minY = Math.min(...ys);
        const maxY = Math.max(...ys);

        const padLeft = 40,
          padRight = 10,
          padTop = 10,
          padBottom = 30;
        const plotW = w - padLeft - padRight;
        const plotH = h - padTop - padBottom;

        function xToPx(x) {
          if (maxX === minX) return padLeft + plotW / 2;
          return padLeft + ((x - minX) * plotW) / (maxX - minX);
        }
        function yToPx(y) {
          if (maxY === minY) return padTop + plotH / 2;
          return padTop + ((maxY - y) * plotH) / (maxY - minY);
        }

        // Axes
        ctx.strokeStyle = "#9ca3af";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(padLeft, padTop);
        ctx.lineTo(padLeft, padTop + plotH);
        ctx.lineTo(padLeft + plotW, padTop + plotH);
        ctx.stroke();

        // X-axis label (time)
        ctx.fillStyle = "#4b5563";
        ctx.font = "11px Inter, system-ui, sans-serif";
        ctx.textAlign = "center";
        ctx.fillText("t (s)", padLeft + plotW / 2, h - 8);

        // Y-axis label
        ctx.save();
        ctx.translate(12, padTop + plotH / 2);
        ctx.rotate(-Math.PI / 2);
        ctx.textAlign = "center";
        ctx.fillText(yLabel, 0, 0);
        ctx.restore();

        // Data line
        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 1.5;
        ctx.beginPath();
        xs.forEach((x, i) => {
          const px = xToPx(x);
          const py = yToPx(ys[i]);
          if (i === 0) ctx.moveTo(px, py);
          else ctx.lineTo(px, py);
        });
        ctx.stroke();
      }

      function toRad(angle, unit) {
        return unit === "deg" ? (angle * Math.PI) / 180 : angle;
      }

      function convertLengthToMeters(value, unit) {
        if (unit === "m") return value;
        if (unit === "cm") return value / 100;
        if (unit === "mm") return value / 1000;
        return value;
      }

      function convertMetersToLength(value, unit) {
        if (unit === "m") return value;
        if (unit === "cm") return value * 100;
        if (unit === "mm") return value * 1000;
        return value;
      }

      function convertMassToKg(value, unit) {
        if (unit === "kg") return value;
        if (unit === "g") return value / 1000;
        return value;
      }

      function convertKToNPerM(value, unit) {
        if (unit === "N/m") return value;
        if (unit === "N/cm") return value * 100; // 1 N/cm = 100 N/m
        return value;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const tabPhysical = document.getElementById("tab-physical");
        const tabOmega = document.getElementById("tab-omega");
        const physicalInputs = document.getElementById("physical-inputs");
        const omegaInputs = document.getElementById("omega-inputs");
        const computeBtn = document.getElementById("compute-btn");
        const errorMsg = document.getElementById("error-msg");
        const resultsSection = document.getElementById("results-section");
        const plotsSection = document.getElementById("plots-section");
        const energyCard = document.getElementById("energy-card");

        function setTab(active) {
          if (active === "physical") {
            tabPhysical.classList.add("tab-active");
            tabOmega.classList.remove("tab-active");
            physicalInputs.classList.remove("hidden");
            omegaInputs.classList.add("hidden");
          } else {
            tabOmega.classList.add("tab-active");
            tabPhysical.classList.remove("tab-active");
            omegaInputs.classList.remove("hidden");
            physicalInputs.classList.add("hidden");
          }
          errorMsg.classList.add("hidden");
        }

        tabPhysical.addEventListener("click", () => setTab("physical"));
        tabOmega.addEventListener("click", () => setTab("omega"));

        computeBtn.addEventListener("click", () => {
          errorMsg.classList.add("hidden");
          resultsSection.classList.add("hidden");
          plotsSection.classList.add("hidden");
          energyCard.classList.add("hidden");

          const ampVal = parseFloat(document.getElementById("amplitude").value);
          const ampUnit = document.getElementById("amp-unit").value;
          const phaseVal = parseFloat(
            document.getElementById("phase").value || "0"
          );
          const phaseUnit = document.getElementById("phase-unit").value;
          const tVal = parseFloat(document.getElementById("time").value || "0");
          const cycles = parseFloat(
            document.getElementById("cycles").value || "3"
          );

          if (isNaN(ampVal) || ampVal <= 0) {
            errorMsg.textContent = "Please enter a positive amplitude.";
            errorMsg.classList.remove("hidden");
            return;
          }

          let omega;
          const usingPhysical = tabPhysical.classList.contains("tab-active");

          if (usingPhysical) {
            const mInput = parseFloat(document.getElementById("mass").value);
            const mUnit = document.getElementById("mass-unit").value;
            const kInput = parseFloat(document.getElementById("k").value);
            const kUnit = document.getElementById("k-unit").value;

            if (isNaN(mInput) || mInput <= 0 || isNaN(kInput) || kInput <= 0) {
              errorMsg.textContent =
                "For mass–spring mode, please enter positive values for mass and spring constant.";
              errorMsg.classList.remove("hidden");
              return;
            }

            const m = convertMassToKg(mInput, mUnit);
            const k = convertKToNPerM(kInput, kUnit);
            omega = Math.sqrt(k / m);

            // Store for energy calculations
            computeBtn.dataset.m = m.toString();
            computeBtn.dataset.k = k.toString();
          } else {
            const omegaInput = parseFloat(
              document.getElementById("omega").value
            );
            const TInput = parseFloat(
              document.getElementById("omega-period").value
            );

            if (!isNaN(omegaInput) && omegaInput > 0) {
              omega = omegaInput;
            } else if (!isNaN(TInput) && TInput > 0) {
              omega = (2 * Math.PI) / TInput;
            } else {
              errorMsg.textContent =
                "For ω-mode, enter a positive angular frequency or period.";
              errorMsg.classList.remove("hidden");
              return;
            }

            computeBtn.dataset.m = "";
            computeBtn.dataset.k = "";
          }

          const A_m = convertLengthToMeters(ampVal, ampUnit);
          const phi = toRad(phaseVal, phaseUnit);
          const t = isNaN(tVal) ? 0 : tVal;

          // Kinematics at time t
          const arg = omega * t + phi;
          const x_m = A_m * Math.cos(arg);
          const v_m = -A_m * omega * Math.sin(arg);
          const a_m = -A_m * omega * omega * Math.cos(arg);

          const xOut = convertMetersToLength(x_m, ampUnit);
          const vOut = convertMetersToLength(v_m, ampUnit);
          const aOut = convertMetersToLength(a_m, ampUnit);

          document.getElementById("res-x").textContent =
            xOut.toExponential(4) + " " + ampUnit;
          document.getElementById("res-v").textContent =
            vOut.toExponential(4) + " " + ampUnit + "/s";
          document.getElementById("res-a").textContent =
            aOut.toExponential(4) + " " + ampUnit + "/s²";

          const f = omega / (2 * Math.PI);
          const T = 1 / f;

          document.getElementById("res-omega").textContent =
            omega.toFixed(4) + " rad/s";
          document.getElementById("res-f").textContent = f.toFixed(4) + " Hz";
          document.getElementById("res-T").textContent = T.toFixed(4) + " s";

          // Energy if m and k are available
          const mStored = parseFloat(computeBtn.dataset.m);
          const kStored = parseFloat(computeBtn.dataset.k);
          if (
            !isNaN(mStored) &&
            !isNaN(kStored) &&
            mStored > 0 &&
            kStored > 0
          ) {
            const E = 0.5 * kStored * A_m * A_m;
            const U = 0.5 * kStored * x_m * x_m;
            const K = 0.5 * mStored * v_m * v_m;
            document.getElementById("res-E").textContent =
              E.toExponential(4) + " J";
            document.getElementById("res-U").textContent =
              U.toExponential(4) + " J";
            document.getElementById("res-K").textContent =
              K.toExponential(4) + " J";
            energyCard.classList.remove("hidden");
          }

          // Generate plots
          const nPoints = 300;
          const xs = [];
          const xVals = [];
          const vVals = [];
          const aVals = [];
          const tMax = cycles * T;
          for (let i = 0; i <= nPoints; i++) {
            const tt = (tMax * i) / nPoints;
            const argi = omega * tt + phi;
            const x_m_i = A_m * Math.cos(argi);
            const v_m_i = -A_m * omega * Math.sin(argi);
            const a_m_i = -A_m * omega * omega * Math.cos(argi);
            xs.push(tt);
            xVals.push(convertMetersToLength(x_m_i, ampUnit));
            vVals.push(convertMetersToLength(v_m_i, ampUnit));
            aVals.push(convertMetersToLength(a_m_i, ampUnit));
          }

          plotLine("plot-x", xs, xVals, "x (" + ampUnit + ")");
          plotLine("plot-v", xs, vVals, "v (" + ampUnit + "/s)");
          plotLine("plot-a", xs, aVals, "a (" + ampUnit + "/s²)");

          resultsSection.classList.remove("hidden");
          plotsSection.classList.remove("hidden");
        });
      });
    </script>

