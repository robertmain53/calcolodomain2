    <script>
      // Simple payoff engine for basic strategies
      function computePayoffPerShare(strategy, S, K, premium) {
        switch (strategy) {
          case "longStock":
            return S - K; // here K used as entry price for stock
          case "shortStock":
            return K - S;
          case "longCall":
            return Math.max(0, S - K) - premium;
          case "shortCall":
            return premium - Math.max(0, S - K);
          case "longPut":
            return Math.max(0, K - S) - premium;
          case "shortPut":
            return premium - Math.max(0, K - S);
          case "coveredCall": {
            const stock = S - K; // long stock at K
            const call = premium - Math.max(0, S - K); // short call
            return stock + call;
          }
          case "protectivePut": {
            const stock = S - K; // long stock at K
            const put = Math.max(0, K - S) - premium; // long put
            return stock + put;
          }
          default:
            return 0;
        }
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "–";
        return (value < 0 ? "-$" : "$") + Math.abs(value).toFixed(2);
      }

      function calculatePayoff() {
        const strategy = document.getElementById("strategy").value;
        const S0 =
          parseFloat(document.getElementById("underlyingPrice").value) || 0;
        const K = parseFloat(document.getElementById("strikePrice").value) || 0;
        const premium =
          parseFloat(document.getElementById("premium").value) || 0;
        const contracts = Math.max(
          1,
          parseInt(document.getElementById("contracts").value, 10) || 1
        );
        const minPrice =
          parseFloat(document.getElementById("minPrice").value) || 0;
        const maxPrice =
          parseFloat(document.getElementById("maxPrice").value) || 0;

        const contractSize = 100;
        const steps = 10;
        const step = (maxPrice - minPrice) / steps || 1;

        const prices = [];
        for (let i = 0; i <= steps; i++) {
          prices.push(minPrice + i * step);
        }

        const payoffs = prices.map((S) => {
          // For stock strategies, treat K as entry price
          const entryPrice =
            strategy === "longStock" ||
            strategy === "shortStock" ||
            strategy === "coveredCall" ||
            strategy === "protectivePut"
              ? S0
              : K;
          const perShare = computePayoffPerShare(
            strategy,
            S,
            entryPrice,
            premium
          );
          return perShare * contracts * contractSize;
        });

        // Breakeven approximation: find price where payoff crosses zero
        let breakeven = null;
        for (let i = 1; i < prices.length; i++) {
          if (
            (payoffs[i - 1] <= 0 && payoffs[i] >= 0) ||
            (payoffs[i - 1] >= 0 && payoffs[i] <= 0)
          ) {
            breakeven = prices[i];
            break;
          }
        }

        const maxProfit = Math.max.apply(null, payoffs);
        const maxLoss = Math.min.apply(null, payoffs);

        // payoff at current price
        const currentPerShare = computePayoffPerShare(
          strategy,
          S0,
          strategy === "longStock" ||
            strategy === "shortStock" ||
            strategy === "coveredCall" ||
            strategy === "protectivePut"
            ? S0
            : K,
          premium
        );
        const currentPayoff = currentPerShare * contracts * contractSize;

        document.getElementById("breakevenOutput").textContent =
          breakeven !== null ? "$" + breakeven.toFixed(2) : "–";
        document.getElementById("maxProfitOutput").textContent =
          formatCurrency(maxProfit);
        document.getElementById("maxLossOutput").textContent =
          formatCurrency(maxLoss);
        document.getElementById("currentPayoffOutput").textContent =
          formatCurrency(currentPayoff);

        const tbody = document.getElementById("payoffTableBody");
        tbody.innerHTML = "";
        prices.forEach((S, idx) => {
          const tr = document.createElement("tr");
          const tdPrice = document.createElement("td");
          const tdPayoff = document.createElement("td");
          tdPrice.className = "text-left";
          tdPrice.textContent = "$" + S.toFixed(2);
          tdPayoff.textContent = formatCurrency(payoffs[idx]);
          if (payoffs[idx] > 0) {
            tdPayoff.className = "text-green-700";
          } else if (payoffs[idx] < 0) {
            tdPayoff.className = "text-red-700";
          } else {
            tdPayoff.className = "text-gray-700";
          }
          tr.appendChild(tdPrice);
          tr.appendChild(tdPayoff);
          tbody.appendChild(tr);
        });
      }

      document
        .getElementById("calculatePayoffBtn")
        .addEventListener("click", calculatePayoff);
      window.addEventListener("DOMContentLoaded", calculatePayoff);
    </script>

