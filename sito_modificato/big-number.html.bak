    const bigA = document.getElementById('big-a');
    const bigB = document.getElementById('big-b');
    const inputErr = document.getElementById('input-error');
    const resultRaw = document.getElementById('result-raw');
    const resultGrouped = document.getElementById('result-grouped');
    const resultSci = document.getElementById('result-sci');
    const resultName = document.getElementById('result-name');
    const opButtons = document.querySelectorAll('.op-btn');
    const formatABtn = document.getElementById('format-a-btn');

    function cleanDigits(s) {
      return s.replace(/[^0-9]/g, '').replace(/^0+/, '') || '0';
    }

    function addStrings(a, b) {
      let carry = 0, res = '';
      let i = a.length - 1, j = b.length - 1;
      while (i >= 0 || j >= 0 || carry) {
        const da = i >= 0 ? parseInt(a[i], 10) : 0;
        const db = j >= 0 ? parseInt(b[j], 10) : 0;
        const sum = da + db + carry;
        res = (sum % 10) + res;
        carry = Math.floor(sum / 10);
        i--; j--;
      }
      return res.replace(/^0+/, '') || '0';
    }

    function compareStrings(a, b) {
      a = a.replace(/^0+/, '') || '0';
      b = b.replace(/^0+/, '') || '0';
      if (a.length > b.length) return 1;
      if (a.length < b.length) return -1;
      if (a === b) return 0;
      return a > b ? 1 : -1;
    }

    function subStrings(a, b) {
      // assume a >= b
      let res = '';
      let borrow = 0;
      let i = a.length - 1, j = b.length - 1;
      while (i >= 0) {
        let da = parseInt(a[i], 10) - borrow;
        const db = j >= 0 ? parseInt(b[j], 10) : 0;
        if (da < db) {
          da += 10;
          borrow = 1;
        } else {
          borrow = 0;
        }
        const diff = da - db;
        res = diff + res;
        i--; j--;
      }
      return res.replace(/^0+/, '') || '0';
    }

    function mulStrings(a, b) {
      const la = a.length, lb = b.length;
      const res = Array(la + lb).fill(0);
      for (let i = la - 1; i >= 0; i--) {
        for (let j = lb - 1; j >= 0; j--) {
          const mul = (a[i] - '0') * (b[j] - '0');
          const sum = res[i + j + 1] + mul;
          res[i + j + 1] = sum % 10;
          res[i + j] += Math.floor(sum / 10);
        }
      }
      while (res.length > 1 && res[0] === 0) res.shift();
      return res.join('');
    }

    function groupThousands(s) {
      let out = '';
      let cnt = 0;
      for (let i = s.length - 1; i >= 0; i--) {
        out = s[i] + out;
        cnt++;
        if (cnt === 3 && i !== 0) {
          out = ',' + out;
          cnt = 0;
        }
      }
      return out;
    }

    function toScientific(s) {
      s = s.replace(/^0+/, '') || '0';
      if (s === '0') return '0';
      const len = s.length;
      const first = s[0];
      const rest = s.slice(1);
      if (rest.length === 0) return first;
      return first + '.' + rest.slice(0, 12).replace(/0+$/, '') + ' × 10^' + (len - 1);
    }

    // name large numbers up to 10^303 (centillion)
    const scaleNames = [
      '', 'thousand', 'million', 'billion', 'trillion', 'quadrillion',
      'quintillion', 'sextillion', 'septillion', 'octillion', 'nonillion',
      'decillion', 'undecillion', 'duodecillion', 'tredecillion', 'quattuordecillion',
      'quindecillion', 'sexdecillion', 'septendecillion', 'octodecillion', 'novemdecillion',
      'vigintillion', 'unvigintillion', 'duovigintillion', 'trevigintillion',
      'quattuorvigintillion', 'quinvigintillion', 'sesvigintillion', 'septenvigintillion',
      'octovigintillion', 'novemvigintillion', 'trigintillion', 'untrigintillion',
      'duotrigintillion', 'centillion'
    ];

    function threeDigitToWords(n) {
      const ones = ['', 'one','two','three','four','five','six','seven','eight','nine','ten',
        'eleven','twelve','thirteen','fourteen','fifteen','sixteen','seventeen','eighteen','nineteen'];
      const tens = ['', '', 'twenty','thirty','forty','fifty','sixty','seventy','eighty','ninety'];
      n = parseInt(n, 10);
      if (n === 0) return '';
      if (n < 20) return ones[n];
      if (n < 100) {
        return tens[Math.floor(n/10)] + (n%10 ? '-' + ones[n%10] : '');
      }
      const rem = n % 100;
      return ones[Math.floor(n/100)] + ' hundred' + (rem ? ' ' + threeDigitToWords(rem) : '');
    }

    function nameBigNumber(s) {
      s = s.replace(/^0+/, '') || '0';
      if (s === '0') return 'zero';
      // split in groups of 3 from right
      const groups = [];
      for (let i = s.length; i > 0; i -= 3) {
        groups.unshift(s.substring(Math.max(0, i-3), i));
      }
      const numGroups = groups.length;
      // our scale list isn't infinite
      if (numGroups > scaleNames.length) {
        return 'Number too large for name (length ' + s.length + ' digits).';
      }
      const parts = [];
      groups.forEach((g, idx) => {
        const words = threeDigitToWords(g);
        if (words) {
          const scaleIdx = numGroups - idx - 1;
          const scale = scaleNames[scaleIdx] || '';
          parts.push(words + (scale ? ' ' + scale : ''));
        }
      });
      return parts.join(' ').trim();
    }

    function runOperation(op) {
      inputErr.textContent = '';
      let a = cleanDigits(bigA.value);
      let b = cleanDigits(bigB.value);
      if (a === '0' && b === '0') {
        inputErr.textContent = 'Enter at least one non-zero number.';
        return;
      }
      let res = '0';
      if (op === 'add') {
        res = addStrings(a, b);
      } else if (op === 'sub') {
        if (compareStrings(a, b) < 0) {
          inputErr.textContent = 'For A − B, A must be greater than or equal to B.';
          res = '0';
        } else {
          res = subStrings(a, b);
        }
      } else if (op === 'mul') {
        if ((a.length + b.length) > 4000) {
          inputErr.textContent = 'Multiplication of extremely large inputs may be slow. Try smaller numbers.';
        }
        res = mulStrings(a, b);
      }
      resultRaw.textContent = res;
      resultGrouped.textContent = groupThousands(res);
      resultSci.textContent = toScientific(res);
      resultName.textContent = nameBigNumber(res);
    }

    opButtons.forEach(btn => {
      btn.addEventListener('click', () => {
        opButtons.forEach(b => b.classList.remove('bg-blue-600','text-white'));
        btn.classList.add('bg-blue-600','text-white');
        runOperation(btn.dataset.op);
      });
    });

    formatABtn.addEventListener('click', () => {
      inputErr.textContent = '';
      const a = cleanDigits(bigA.value);
      resultRaw.textContent = a;
      resultGrouped.textContent = groupThousands(a);
      resultSci.textContent = toScientific(a);
      resultName.textContent = nameBigNumber(a);
    });

    // initial run
    runOperation('add');
  </script>

