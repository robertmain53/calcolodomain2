<script>
  // Tab switching
  document.querySelectorAll('.srm-tab').forEach(btn => {
    btn.addEventListener('click', () => {
      const target = btn.getAttribute('data-tab');
      document.querySelectorAll('.srm-tab').forEach(b => {
        b.classList.remove('border-blue-600', 'text-blue-600');
        b.classList.add('border-transparent', 'text-gray-600');
      });
      btn.classList.add('border-blue-600', 'text-blue-600');
      btn.classList.remove('text-gray-600');

      document.getElementById('tab-converter').classList.toggle('hidden', target !== 'converter');
      document.getElementById('tab-grain').classList.toggle('hidden', target !== 'grain');
    });
  });

  // Color helpers
  function srmToRGB(srm) {
    // Daniels approximation for SRM -> RGB
    const s = Math.max(0, Math.min(40, srm));
    const r = Math.round(Math.max(0, Math.min(255, 255 * Math.exp(-0.1 * s))));
    const g = Math.round(Math.max(0, Math.min(255, 255 * Math.exp(-0.05 * s))));
    const b = Math.round(Math.max(0, Math.min(255, 255 * Math.exp(-0.02 * s))));
    return { r, g, b };
  }

  function rgbToCss({r, g, b}) {
    return `rgb(${r}, ${g}, ${b})`;
  }

  function describeSRM(srm) {
    if (!isFinite(srm) || srm <= 0) return '—';
    if (srm < 3) return 'Very pale straw';
    if (srm < 5) return 'Straw to pale gold';
    if (srm < 8) return 'Gold';
    if (srm < 12) return 'Deep gold to light amber';
    if (srm < 18) return 'Amber to copper';
    if (srm < 25) return 'Deep amber to brown';
    if (srm < 35) return 'Brown to very dark brown';
    return 'Very dark brown to black';
  }

  function updateBeerVisual(srm, liquidEl, descEl) {
    if (!liquidEl || !descEl) return;
    if (!isFinite(srm) || srm <= 0) {
      liquidEl.style.background = 'transparent';
      descEl.textContent = '—';
      return;
    }
    const rgb = srmToRGB(srm);
    liquidEl.style.background = rgbToCss(rgb);
    descEl.textContent = `${describeSRM(srm)} (≈ ${srm.toFixed(1)} SRM)`;
  }

  // Converter logic
  function toSRM(value, scale) {
    const v = Number(value);
    if (!isFinite(v) || v < 0) return NaN;
    switch (scale) {
      case 'srm': return v;
      case 'ebc': return v * 0.508; // SRM ≈ EBC / 1.97
      case 'lovibond': return v;    // Approximate for typical ranges
      default: return NaN;
    }
  }

  function fromSRM(srm) {
    if (!isFinite(srm)) return { srm: NaN, ebc: NaN, lovibond: NaN };
    return {
      srm,
      ebc: srm * 1.97,
      lovibond: srm // approximate
    };
  }

  document.getElementById('convertBtn').addEventListener('click', () => {
    const val = parseFloat(document.getElementById('inputValue').value);
    const scale = document.getElementById('inputScale').value;
    const srm = toSRM(val, scale);
    const out = fromSRM(srm);

    const fmt = x => (isFinite(x) ? x.toFixed(2) : '—');

    document.getElementById('outSRM').textContent = fmt(out.srm);
    document.getElementById('outEBC').textContent = fmt(out.ebc);
    document.getElementById('outLovibond').textContent = fmt(out.lovibond);

    updateBeerVisual(out.srm, document.getElementById('beerLiquid'), document.getElementById('beerDescription'));
  });

  // Grain bill logic
  const grainTableBody = document.getElementById('grainTableBody');

  function addGrainRow(name = '', weight = '', weightUnit = 'lb', color = '', colorScale = 'lovibond') {
    const tr = document.createElement('tr');
    tr.className = 'border-t border-gray-200';
    tr.innerHTML = `
      <td class="px-2 py-1.5">
        <input type="text" class="grain-name w-full border border-gray-300 rounded-md px-2 py-1 text-xs" placeholder="e.g. Pale malt" value="${name}">
      </td>
      <td class="px-2 py-1.5">
        <input type="number" step="0.001" min="0" class="grain-weight w-full border border-gray-300 rounded-md px-2 py-1 text-xs" value="${weight}">
      </td>
      <td class="px-2 py-1.5">
        <select class="grain-weight-unit w-full border border-gray-300 rounded-md px-2 py-1 text-xs">
          <option value="lb"${weightUnit === 'lb' ? ' selected' : ''}>lb</option>
          <option value="kg"${weightUnit === 'kg' ? ' selected' : ''}>kg</option>
        </select>
      </td>
      <td class="px-2 py-1.5">
        <input type="number" step="0.1" min="0" class="grain-color w-full border border-gray-300 rounded-md px-2 py-1 text-xs" value="${color}">
      </td>
      <td class="px-2 py-1.5">
        <select class="grain-color-scale w-full border border-gray-300 rounded-md px-2 py-1 text-xs">
          <option value="lovibond"${colorScale === 'lovibond' ? ' selected' : ''}>Lovibond (°L)</option>
          <option value="ebc"${colorScale === 'ebc' ? ' selected' : ''}>EBC</option>
        </select>
      </td>
      <td class="px-2 py-1.5 text-right">
        <button type="button" class="remove-grain text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;
    grainTableBody.appendChild(tr);

    tr.querySelector('.remove-grain').addEventListener('click', () => {
      tr.remove();
    });
  }

  // Initial rows
  addGrainRow('Pale malt', '9', 'lb', '2', 'lovibond');
  addGrainRow('Crystal 60', '1', 'lb', '60', 'lovibond');

  document.getElementById('addGrainRow').addEventListener('click', () => addGrainRow());

  function calcMCU() {
    const rows = grainTableBody.querySelectorAll('tr');
    const batchVol = parseFloat(document.getElementById('batchVolume').value);
    const batchUnit = document.getElementById('batchUnit').value;

    if (!isFinite(batchVol) || batchVol <= 0 || rows.length === 0) return { mcu: NaN };

    let mcu = 0;

    rows.forEach(row => {
      const w = parseFloat(row.querySelector('.grain-weight').value);
      const wUnit = row.querySelector('.grain-weight-unit').value;
      const c = parseFloat(row.querySelector('.grain-color').value);
      const cScale = row.querySelector('.grain-color-scale').value;

      if (!isFinite(w) || w <= 0 || !isFinite(c) || c <= 0) return;

      let weightLb, colorL;

      if (wUnit === 'lb') {
        weightLb = w;
      } else {
        weightLb = w * 2.20462; // kg to lb
      }

      if (cScale === 'lovibond') {
        colorL = c;
      } else {
        // EBC to Lovibond approx: °L ≈ EBC / 1.97
        colorL = c / 1.97;
      }

      let volGal;
      if (batchUnit === 'gal') {
        volGal = batchVol;
      } else {
        volGal = batchVol * 0.264172; // L to gal
      }

      if (volGal > 0) {
        mcu += (weightLb * colorL) / volGal;
      }
    });

    return { mcu };
  }

  document.getElementById('calcSRMFromGrain').addEventListener('click', () => {
    const { mcu } = calcMCU();
    const errEl = document.getElementById('grainError');

    if (!isFinite(mcu) || mcu <= 0) {
      errEl.classList.remove('hidden');
      document.getElementById('outMCU').textContent = '—';
      document.getElementById('outSRMMorey').textContent = '—';
      document.getElementById('outEBCMorey').textContent = '—';
      updateBeerVisual(NaN, document.getElementById('beerLiquidGrain'), document.getElementById('beerDescriptionGrain'));
      return;
    }
    errEl.classList.add('hidden');

    const srm = 1.4922 * Math.pow(mcu, 0.6859);
    const ebc = srm * 1.97;

    const fmt = x => (isFinite(x) ? x.toFixed(2) : '—');

    document.getElementById('outMCU').textContent = fmt(mcu);
    document.getElementById('outSRMMorey').textContent = fmt(srm);
    document.getElementById('outEBCMorey').textContent = fmt(ebc);

    updateBeerVisual(srm, document.getElementById('beerLiquidGrain'), document.getElementById('beerDescriptionGrain'));
  });

  // Mobile menu toggle (from template)
  document.getElementById('mobile-menu-toggle').addEventListener('click', function () {
    const menu = document.getElementById('mobile-menu');
    const expanded = this.getAttribute('aria-expanded') === 'true';
    this.setAttribute('aria-expanded', String(!expanded));
    menu.classList.toggle('hidden');
  });

  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
