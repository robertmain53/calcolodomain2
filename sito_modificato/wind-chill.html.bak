    <script>
      // Utility conversions
      function fToC(f) {
        return ((f - 32) * 5) / 9;
      }
      function cToF(c) {
        return (c * 9) / 5 + 32;
      }
      function mphToKmh(mph) {
        return mph * 1.609344;
      }
      function kmhToMph(kmh) {
        return kmh / 1.609344;
      }
      function msToMph(ms) {
        return ms * 2.236936;
      }
      function mphToMs(mph) {
        return mph / 2.236936;
      }

      function round1(x) {
        return Math.round(x * 10) / 10;
      }

      function computeWindChillF(Tf, Vmph) {
        // Validity check: T <= 50°F and V > 3 mph
        const valid = Tf <= 50 && Vmph > 3;
        const WCT =
          35.74 +
          0.6215 * Tf -
          35.75 * Math.pow(Vmph, 0.16) +
          0.4275 * Tf * Math.pow(Vmph, 0.16);
        return { WCT, valid };
      }

      function computeWindChillC(Tc, Vkmh) {
        const valid = Tc <= 10 && Vkmh > 4.8;
        const WCT =
          13.12 +
          0.6215 * Tc -
          11.37 * Math.pow(Vkmh, 0.16) +
          0.3965 * Tc * Math.pow(Vkmh, 0.16);
        return { WCT, valid };
      }

      function classifyRisk(windChillF) {
        if (isNaN(windChillF))
          return { level: "—", frostbite: "—", color: "gray" };
        if (windChillF > 0) {
          return {
            level: "Low to moderate",
            frostbite: "Frostbite unlikely for most people",
            color: "green",
          };
        } else if (windChillF > -20) {
          return {
            level: "Increased risk",
            frostbite: "≈ 30 minutes on exposed skin",
            color: "yellow",
          };
        } else if (windChillF > -35) {
          return {
            level: "High",
            frostbite: "≈ 10–30 minutes",
            color: "orange",
          };
        } else {
          return {
            level: "Extreme",
            frostbite: "≤ 10 minutes (as little as 5 minutes)",
            color: "red",
          };
        }
      }

      function updateRiskBadgeColor(color) {
        const el = document.getElementById("risk-level");
        el.classList.remove(
          "text-green-600",
          "text-yellow-600",
          "text-orange-600",
          "text-red-600"
        );
        if (color === "green") el.classList.add("text-green-600");
        else if (color === "yellow") el.classList.add("text-yellow-600");
        else if (color === "orange") el.classList.add("text-orange-600");
        else if (color === "red") el.classList.add("text-red-600");
      }

      function calculateWindChill() {
        const unitSystem = document.getElementById("unit-system").value;
        const Tinput = parseFloat(document.getElementById("air-temp").value);
        const tempUnit = document.getElementById("temp-unit").value;
        const Vinput = parseFloat(document.getElementById("wind-speed").value);
        const windUnit = document.getElementById("wind-unit").value;
        const validityNote = document.getElementById("validity-note");

        if (isNaN(Tinput) || isNaN(Vinput)) {
          document.getElementById("wind-chill-output").textContent = "—";
          document.getElementById("wind-chill-output-secondary").textContent =
            "";
          document.getElementById("risk-level").textContent = "—";
          document.getElementById("frostbite-time").textContent = "—";
          validityNote.textContent = "Enter both temperature and wind speed.";
          return;
        }

        // Normalize to F and mph for risk classification
        let Tf, Vmph;
        if (tempUnit === "F") Tf = Tinput;
        else Tf = cToF(Tinput);
        if (windUnit === "mph") Vmph = Vinput;
        else if (windUnit === "kmh") Vmph = kmhToMph(Vinput);
        else Vmph = msToMph(Vinput);

        let WCTf, valid;
        if (unitSystem === "us") {
          const res = computeWindChillF(Tf, Vmph);
          WCTf = res.WCT;
          valid = res.valid;
        } else {
          // metric formula uses C and km/h
          const Tc = fToC(Tf);
          const Vkmh = mphToKmh(Vmph);
          const res = computeWindChillC(Tc, Vkmh);
          const WCTc = res.WCT;
          valid = res.valid;
          WCTf = cToF(WCTc);
        }

        const WCTc = fToC(WCTf);
        document.getElementById("wind-chill-output").textContent =
          unitSystem === "us" ? `${round1(WCTf)} °F` : `${round1(WCTc)} °C`;
        document.getElementById("wind-chill-output-secondary").textContent =
          unitSystem === "us"
            ? `${round1(WCTc)} °C equivalent`
            : `${round1(WCTf)} °F equivalent`;

        const risk = classifyRisk(WCTf);
        document.getElementById("risk-level").textContent = risk.level;
        document.getElementById("frostbite-time").textContent = risk.frostbite;
        updateRiskBadgeColor(risk.color);

        if (!valid) {
          validityNote.textContent =
            "Note: The standard wind chill formula is only valid for T ≤ 50°F (10°C) and wind speed > 3 mph (5 km/h).";
        } else {
          validityNote.textContent = "";
        }
      }

      function resetForm() {
        document.getElementById("unit-system").value = "us";
        document.getElementById("air-temp").value = 30;
        document.getElementById("temp-unit").value = "F";
        document.getElementById("wind-speed").value = 15;
        document.getElementById("wind-unit").value = "mph";
        document.getElementById("validity-note").textContent = "";
        calculateWindChill();
      }

      function populateMiniChart() {
        const tempsF = [40, 30, 20, 10, 0, -10, -20];
        const speeds = [5, 10, 20, 30, 40];
        const tbody = document.getElementById("mini-chart-body");
        tbody.innerHTML = "";
        tempsF.forEach((T) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td class="px-2 py-1 border border-gray-200">${T}</td>`;
          speeds.forEach((V) => {
            const { WCT } = computeWindChillF(T, V);
            tr.innerHTML += `<td class="px-2 py-1 border border-gray-200 text-right">${Math.round(
              WCT
            )}</td>`;
          });
          tbody.appendChild(tr);
        });
      }

      function syncUnitsWithSystem() {
        const system = document.getElementById("unit-system").value;
        const tempUnit = document.getElementById("temp-unit");
        const windUnit = document.getElementById("wind-unit");
        if (system === "us") {
          tempUnit.value = "F";
          windUnit.value = "mph";
        } else {
          tempUnit.value = "C";
          // default to km/h for metric
          if (windUnit.value === "mph") windUnit.value = "kmh";
        }
        calculateWindChill();
      }

      async function useCurrentWeather() {
        const statusEl = document.getElementById("geo-status");
        statusEl.textContent = "Detecting location…";
        try {
          if (!navigator.geolocation) {
            statusEl.textContent = "Geolocation not supported in this browser.";
            return;
          }
          navigator.geolocation.getCurrentPosition(
            async (pos) => {
              const { latitude, longitude } = pos.coords;
              statusEl.textContent = "Fetching local weather…";
              try {
                // Use open-meteo.com (no key required) for current weather
                const url = `https://api.open-meteo.com/v1/forecast?latitude=${latitude}&longitude=${longitude}&current_weather=true`;
                const resp = await fetch(url);
                if (!resp.ok) throw new Error("Weather API error");
                const data = await resp.json();
                if (!data.current_weather) throw new Error("No weather data");
                const T = data.current_weather.temperature; // °C
                const Vms = data.current_weather.windspeed; // m/s or km/h depending on API version; open-meteo uses km/h in current_weather
                // As of current API, windspeed is in km/h:
                const Vkmh = Vms;
                document.getElementById("unit-system").value = "metric";
                document.getElementById("temp-unit").value = "C";
                document.getElementById("wind-unit").value = "kmh";
                document.getElementById("air-temp").value = round1(T);
                document.getElementById("wind-speed").value = round1(Vkmh);
                statusEl.textContent = "Weather loaded.";
                calculateWindChill();
              } catch (e) {
                statusEl.textContent = "Could not load weather data.";
              }
            },
            (err) => {
              statusEl.textContent =
                "Location permission denied or unavailable.";
            }
          );
        } catch (e) {
          statusEl.textContent = "Error using geolocation.";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateWindChill);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetForm);
        document
          .getElementById("unit-system")
          .addEventListener("change", syncUnitsWithSystem);
        document
          .getElementById("temp-unit")
          .addEventListener("change", calculateWindChill);
        document
          .getElementById("wind-unit")
          .addEventListener("change", calculateWindChill);
        document.getElementById("air-temp").addEventListener("input", () => {
          /* live update optional */
        });
        document.getElementById("wind-speed").addEventListener("input", () => {
          /* live update optional */
        });
        document
          .getElementById("use-current-weather")
          .addEventListener("click", useCurrentWeather);

        populateMiniChart();
        calculateWindChill();
      });

