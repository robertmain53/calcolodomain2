    <script>
      // Utility functions
      function roundTo(value, decimals) {
        if (!isFinite(value)) return NaN;
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function lbft3ToKgM3(lbft3) {
        return lbft3 * 16.018463;
      }

      function lbft3ToTonsYd3(lbft3) {
        return (lbft3 * 27) / 2000;
      }

      function kgM3ToLbft3(kgm3) {
        return kgm3 / 16.018463;
      }

      function tonsYd3ToLbft3(tonsYd3) {
        return (tonsYd3 * 2000) / 27;
      }

      // Shape tab handling
      const shapeTabs = document.querySelectorAll(".shape-tab");
      const shapePanels = document.querySelectorAll(".shape-panel");

      function setActiveShape(shape) {
        shapeTabs.forEach((btn) => {
          if (btn.dataset.shape === shape) {
            btn.classList.remove(
              "border-gray-300",
              "bg-white",
              "text-gray-800"
            );
            btn.classList.add("border-blue-600", "bg-blue-600", "text-white");
          } else {
            btn.classList.remove(
              "border-blue-600",
              "bg-blue-600",
              "text-white"
            );
            btn.classList.add("border-gray-300", "bg-white", "text-gray-800");
          }
        });
        shapePanels.forEach((panel) => {
          panel.classList.toggle("hidden", panel.dataset.shapePanel !== shape);
        });
      }

      shapeTabs.forEach((btn) => {
        btn.addEventListener("click", () => setActiveShape(btn.dataset.shape));
      });

      // Depth presets
      function bindDepthPreset(inputId, presetId) {
        const input = document.getElementById(inputId);
        const preset = document.getElementById(presetId);
        if (!input || !preset) return;
        preset.addEventListener("change", () => {
          if (preset.value !== "") {
            input.value = preset.value;
          }
        });
      }

      bindDepthPreset("rect-depth", "rect-depth-preset");
      bindDepthPreset("circle-depth", "circle-depth-preset");
      bindDepthPreset("border-depth", "border-depth-preset");

      // Density handling
      const stoneTypeSelect = document.getElementById("stone-type");
      const densityLbft3Input = document.getElementById("density-lbft3");
      const densityKgm3Input = document.getElementById("density-kgm3");
      const densityTonsYd3Input = document.getElementById("density-tonsyd3");

      function setDensityFromLbft3(lbft3) {
        if (!isFinite(lbft3) || lbft3 <= 0) return;
        densityLbft3Input.value = roundTo(lbft3, 1);
        densityKgm3Input.value = roundTo(lbft3ToKgM3(lbft3), 0);
        densityTonsYd3Input.value = roundTo(lbft3ToTonsYd3(lbft3), 2);
      }

      function initDensityFromStoneType() {
        const opt = stoneTypeSelect.selectedOptions[0];
        const lbft3 = parseFloat(opt.dataset.lbft3 || "95");
        setDensityFromLbft3(lbft3);
      }

      stoneTypeSelect.addEventListener("change", () => {
        if (stoneTypeSelect.value !== "custom") {
          initDensityFromStoneType();
          densityLbft3Input.readOnly = true;
          densityKgm3Input.readOnly = true;
          densityTonsYd3Input.readOnly = true;
        } else {
          densityLbft3Input.readOnly = false;
          densityKgm3Input.readOnly = false;
          densityTonsYd3Input.readOnly = false;
        }
      });

      densityLbft3Input.addEventListener("input", () => {
        const v = parseFloat(densityLbft3Input.value);
        if (isFinite(v) && v > 0) setDensityFromLbft3(v);
      });

      densityKgm3Input.addEventListener("input", () => {
        const v = parseFloat(densityKgm3Input.value);
        if (isFinite(v) && v > 0) {
          const lbft3 = kgM3ToLbft3(v);
          setDensityFromLbft3(lbft3);
        }
      });

      densityTonsYd3Input.addEventListener("input", () => {
        const v = parseFloat(densityTonsYd3Input.value);
        if (isFinite(v) && v > 0) {
          const lbft3 = tonsYd3ToLbft3(v);
          setDensityFromLbft3(lbft3);
        }
      });

      // Initialize default density
      initDensityFromStoneType();
      densityLbft3Input.readOnly = true;
      densityKgm3Input.readOnly = true;
      densityTonsYd3Input.readOnly = true;

      // Main calculation
      const unitLengthSelect = document.getElementById("unit-length");
      const unitDepthSelect = document.getElementById("unit-depth");
      const wasteInput = document.getElementById("waste-percent");
      const errorMsg = document.getElementById("error-msg");

      const resFt3 = document.getElementById("res-ft3");
      const resYd3 = document.getElementById("res-yd3");
      const resM3 = document.getElementById("res-m3");
      const resTons = document.getElementById("res-tons");
      const resKg = document.getElementById("res-kg");
      const resLb = document.getElementById("res-lb");
      const resYd3Waste = document.getElementById("res-yd3-waste");
      const resTonsWaste = document.getElementById("res-tons-waste");
      const resCoverageFt2 = document.getElementById("res-coverage-ft2");
      const resCoverageM2 = document.getElementById("res-coverage-m2");

      function getActiveShape() {
        let shape = "rectangle";
        shapeTabs.forEach((btn) => {
          if (btn.classList.contains("bg-blue-600")) {
            shape = btn.dataset.shape;
          }
        });
        return shape;
      }

      function calcVolumeFt3() {
        const shape = getActiveShape();
        const unitLen = unitLengthSelect.value;
        const unitDepth = unitDepthSelect.value;

        function toFeetLength(v) {
          if (unitLen === "ft") return v;
          if (unitLen === "m") return v * 3.28084;
          return v;
        }

        function toFeetDepth(v) {
          if (unitDepth === "in") return v / 12;
          if (unitDepth === "cm") return (v / 100) * 3.28084;
          return v;
        }

        if (shape === "rectangle") {
          const L = parseFloat(document.getElementById("rect-length").value);
          const W = parseFloat(document.getElementById("rect-width").value);
          const D = parseFloat(document.getElementById("rect-depth").value);
          if (
            !isFinite(L) ||
            !isFinite(W) ||
            !isFinite(D) ||
            L <= 0 ||
            W <= 0 ||
            D <= 0
          )
            return null;
          const Lft = toFeetLength(L);
          const Wft = toFeetLength(W);
          const Dft = toFeetDepth(D);
          return Lft * Wft * Dft;
        }

        if (shape === "circle") {
          const dia = parseFloat(
            document.getElementById("circle-diameter").value
          );
          const D = parseFloat(document.getElementById("circle-depth").value);
          if (!isFinite(dia) || !isFinite(D) || dia <= 0 || D <= 0) return null;
          const dft = toFeetLength(dia);
          const Dft = toFeetDepth(D);
          const area = Math.PI * Math.pow(dft / 2, 2);
          return area * Dft;
        }

        if (shape === "border") {
          const L = parseFloat(document.getElementById("border-length").value);
          const W = parseFloat(document.getElementById("border-width").value);
          const D = parseFloat(document.getElementById("border-depth").value);
          if (
            !isFinite(L) ||
            !isFinite(W) ||
            !isFinite(D) ||
            L <= 0 ||
            W <= 0 ||
            D <= 0
          )
            return null;
          const Lft = toFeetLength(L);
          const Wft = toFeetLength(W);
          const Dft = toFeetDepth(D);
          return Lft * Wft * Dft;
        }

        if (shape === "custom") {
          const V = parseFloat(document.getElementById("custom-volume").value);
          const unit = document.getElementById("custom-volume-unit").value;
          if (!isFinite(V) || V <= 0) return null;
          if (unit === "ft3") return V;
          if (unit === "yd3") return V * 27;
          if (unit === "m3") return V / 0.0283168;
          return V;
        }

        return null;
      }

      function calcDepthFeetForCoverage() {
        const shape = getActiveShape();
        const unitDepth = unitDepthSelect.value;

        function toFeetDepth(v) {
          if (unitDepth === "in") return v / 12;
          if (unitDepth === "cm") return (v / 100) * 3.28084;
          return v;
        }

        if (shape === "rectangle") {
          const D = parseFloat(document.getElementById("rect-depth").value);
          if (!isFinite(D) || D <= 0) return null;
          return toFeetDepth(D);
        }
        if (shape === "circle") {
          const D = parseFloat(document.getElementById("circle-depth").value);
          if (!isFinite(D) || D <= 0) return null;
          return toFeetDepth(D);
        }
        if (shape === "border") {
          const D = parseFloat(document.getElementById("border-depth").value);
          if (!isFinite(D) || D <= 0) return null;
          return toFeetDepth(D);
        }
        // For custom volume, we can't infer depth, so skip coverage
        return null;
      }

      function resetResults() {
        [
          resFt3,
          resYd3,
          resM3,
          resTons,
          resKg,
          resLb,
          resYd3Waste,
          resTonsWaste,
          resCoverageFt2,
          resCoverageM2,
        ].forEach((el) => {
          el.textContent = "–";
        });
      }

      document.getElementById("calc-btn").addEventListener("click", () => {
        errorMsg.textContent = "";
        resetResults();

        const Vft3 = calcVolumeFt3();
        if (!isFinite(Vft3) || Vft3 <= 0) {
          errorMsg.textContent = "Please enter valid dimensions and depth.";
          return;
        }

        const densityLbft3 = parseFloat(densityLbft3Input.value);
        if (!isFinite(densityLbft3) || densityLbft3 <= 0) {
          errorMsg.textContent = "Please enter a valid stone density.";
          return;
        }

        const wastePct = parseFloat(wasteInput.value);
        const wasteFactor =
          isFinite(wastePct) && wastePct > 0 ? 1 + wastePct / 100 : 1;

        const Vyd3 = Vft3 / 27;
        const Vm3 = Vft3 * 0.0283168;

        const Wlb = Vft3 * densityLbft3;
        const Wtons = Wlb / 2000;
        const Wkg = Wlb * 0.45359237;

        const Vyd3Adj = Vyd3 * wasteFactor;
        const WtonsAdj = Wtons * wasteFactor;

        resFt3.textContent = roundTo(Vft3, 2).toLocaleString();
        resYd3.textContent = roundTo(Vyd3, 3).toLocaleString();
        resM3.textContent = roundTo(Vm3, 3).toLocaleString();
        resTons.textContent = roundTo(Wtons, 3).toLocaleString();
        resKg.textContent = roundTo(Wkg, 1).toLocaleString();
        resLb.textContent = roundTo(Wlb, 1).toLocaleString();
        resYd3Waste.textContent = roundTo(Vyd3Adj, 3).toLocaleString();
        resTonsWaste.textContent = roundTo(WtonsAdj, 3).toLocaleString();

        const Dft = calcDepthFeetForCoverage();
        if (isFinite(Dft) && Dft > 0) {
          const areaFt2 = Vft3 / Dft;
          const areaM2 = areaFt2 * 0.092903;
          resCoverageFt2.textContent = roundTo(areaFt2, 1).toLocaleString();
          resCoverageM2.textContent = roundTo(areaM2, 1).toLocaleString();
        } else {
          resCoverageFt2.textContent = "–";
          resCoverageM2.textContent = "–";
        }
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        // Reset inputs
        document.getElementById("rect-length").value = "";
        document.getElementById("rect-width").value = "";
        document.getElementById("rect-depth").value = "";
        document.getElementById("circle-diameter").value = "";
        document.getElementById("circle-depth").value = "";
        document.getElementById("border-length").value = "";
        document.getElementById("border-width").value = "";
        document.getElementById("border-depth").value = "";
        document.getElementById("custom-volume").value = "";
        document.getElementById("custom-volume-unit").value = "ft3";
        unitLengthSelect.value = "ft";
        unitDepthSelect.value = "in";
        wasteInput.value = "10";
        stoneTypeSelect.value = "crushed";
        initDensityFromStoneType();
        densityLbft3Input.readOnly = true;
        densityKgm3Input.readOnly = true;
        densityTonsYd3Input.readOnly = true;
        setActiveShape("rectangle");
        errorMsg.textContent = "";
        resetResults();
      });

      // Initialize default view
      setActiveShape("rectangle");
    </script>

