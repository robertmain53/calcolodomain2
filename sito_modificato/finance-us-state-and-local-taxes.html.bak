      function getIncomeRate(state, income) {
        if (income < 50000) return state.incomeLow;
        if (income < 150000) return state.incomeMid;
        return state.incomeHigh;
      }

      function formatCurrency(value) {
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        return (value * 100).toFixed(1) + "%";
      }

      function calculateForState(state, income, homeValue, taxableSpending) {
        const incomeRate = getIncomeRate(state, income);
        const incomeTax = income * incomeRate;
        const salesTax = taxableSpending * state.sales;
        const propertyTax = homeValue * state.property;
        const total = incomeTax + salesTax + propertyTax;
        const effTotal = income > 0 ? total / income : 0;
        return {
          incomeTax,
          salesTax,
          propertyTax,
          total,
          effIncome: income > 0 ? incomeTax / income : 0,
          effSales: income > 0 ? salesTax / income : 0,
          effProperty: income > 0 ? propertyTax / income : 0,
          effTotal,
          incomeRate,
          salesRate: state.sales,
          propertyRate: state.property,
        };
      }

      function buildStateOptions() {
        const select = document.getElementById("state-select");
        STATE_DATA.slice()
          .sort((a, b) => a.name.localeCompare(b.name))
          .forEach((s) => {
            const opt = document.createElement("option");
            opt.value = s.code;
            opt.textContent = `${s.name} (${s.code})`;
            select.appendChild(opt);
          });
        // Default to a large, familiar state
        select.value = "CA";
      }

      function updateResults() {
        const income = Number(document.getElementById("income").value) || 0;
        const homeValue =
          Number(document.getElementById("home-value").value) || 0;
        const taxableSpending =
          Number(document.getElementById("taxable-spending").value) || 0;
        const stateCode = document.getElementById("state-select").value;
        const state = STATE_DATA.find((s) => s.code === stateCode);
        if (!state || income <= 0) {
          return;
        }

        const res = calculateForState(
          state,
          income,
          homeValue,
          taxableSpending
        );

        const card = document.getElementById("results-card");
        const placeholder = document.getElementById("results-placeholder");
        card.classList.remove("hidden");
        placeholder.classList.add("hidden");

        document.getElementById(
          "results-state-name"
        ).textContent = `${state.name} (${state.code})`;
        document.getElementById(
          "results-tagline"
        ).textContent = `Region: ${state.region} · Illustrative effective rates`;

        document.getElementById("results-total").textContent = formatCurrency(
          res.total
        );
        document.getElementById("results-rate").textContent = `${formatPercent(
          res.effTotal
        )} of income`;

        document.getElementById("results-income-tax").textContent =
          formatCurrency(res.incomeTax);
        document.getElementById(
          "results-income-rate"
        ).textContent = `${formatPercent(res.effIncome)} of income`;

        document.getElementById("results-sales-tax").textContent =
          formatCurrency(res.salesTax);
        document.getElementById(
          "results-sales-rate"
        ).textContent = `${formatPercent(res.effSales)} of income`;

        document.getElementById("results-property-tax").textContent =
          formatCurrency(res.propertyTax);
        document.getElementById(
          "results-property-rate"
        ).textContent = `${formatPercent(res.effProperty)} of income`;

        const assumptions = document.getElementById("results-assumptions");
        assumptions.innerHTML = `
      <p><strong>Income tax rate used:</strong> ${formatPercent(
        res.incomeRate
      )} of income (effective)</p>
      <p><strong>Sales tax rate used:</strong> ${formatPercent(
        res.salesRate
      )} of taxable spending</p>
      <p><strong>Property tax rate used:</strong> ${formatPercent(
        res.propertyRate
      )} of home value</p>
      <p>These are stylized, statewide averages for educational comparison and do not reflect every local jurisdiction or individual situation.</p>
    `;
      }

      function buildComparisonTable() {
        const income = Number(document.getElementById("income").value) || 0;
        const homeValue =
          Number(document.getElementById("home-value").value) || 0;
        const taxableSpending =
          Number(document.getElementById("taxable-spending").value) || 0;
        if (income <= 0) return;

        const sortBy = document.getElementById("sort-select").value;
        const tbody = document.getElementById("comparison-tbody");
        tbody.innerHTML = "";

        const rows = STATE_DATA.map((state) => {
          const res = calculateForState(
            state,
            income,
            homeValue,
            taxableSpending
          );
          return { state, res };
        });

        rows.sort((a, b) => {
          if (sortBy === "name")
            return a.state.name.localeCompare(b.state.name);
          if (sortBy === "income") return b.res.effIncome - a.res.effIncome;
          if (sortBy === "sales") return b.res.effSales - a.res.effSales;
          if (sortBy === "property")
            return b.res.effProperty - a.res.effProperty;
          // default: total
          return b.res.effTotal - a.res.effTotal;
        });

        rows.forEach(({ state, res }) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 whitespace-nowrap text-gray-800">${state.name}</td>
        <td class="px-3 py-2 text-right text-gray-900 font-semibold">${(
          res.effTotal * 100
        ).toFixed(1)}%</td>
        <td class="px-3 py-2 text-right text-gray-700">${(
          res.effIncome * 100
        ).toFixed(1)}%</td>
        <td class="px-3 py-2 text-right text-gray-700">${(
          res.effSales * 100
        ).toFixed(1)}%</td>
        <td class="px-3 py-2 text-right text-gray-700">${(
          res.effProperty * 100
        ).toFixed(1)}%</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        buildStateOptions();
        buildComparisonTable();

        document
          .getElementById("calculate-btn")
          .addEventListener("click", () => {
            updateResults();
            buildComparisonTable();
          });

        ["income", "home-value", "taxable-spending"].forEach((id) => {
          document.getElementById(id).addEventListener("change", () => {
            buildComparisonTable();
          });
        });

        document
          .getElementById("sort-select")
          .addEventListener("change", buildComparisonTable);
      });

