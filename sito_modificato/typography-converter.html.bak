                function convertFancyText() {
                  const text = fancyInput.value;
                  fancyOutputContainer.innerHTML = ''; // Pulisce gli output

                  charMaps.forEach(style => {
                    let convertedText = '';
                    for (let i = 0; i < text.length; i++) {
                      const char = text[i];
                      convertedText += style.map[char] || char; // Usa il carattere mappato o quello originale
                    }
                    
                    const label = document.createElement('label');
                    label.className = 'unit-label';
                    label.textContent = style.name;
                    
                    const outputDiv = document.createElement('div');
                    outputDiv.className = 'fancy-output';
                    outputDiv.textContent = convertedText;
                    outputDiv.setAttribute('aria-label', `Click to copy ${style.name} style`);
                    outputDiv.onclick = () => copyToClipboard(outputDiv);
                    
                    const containerDiv = document.createElement('div');
                    containerDiv.appendChild(label);
                    containerDiv.appendChild(outputDiv);
                    fancyOutputContainer.appendChild(containerDiv);
                  });
                }

                function copyToClipboard(div) {
                  navigator.clipboard.writeText(div.textContent).then(() => {
                    // Feedback visivo
                    div.classList.add('copied');
                    div.textContent = 'Copied!';
                    setTimeout(() => {
                      div.classList.remove('copied');
                      // Riscrive il testo originale
                      convertFancyText();
                    }, 1000);
                  });
                }

                fancyInput.addEventListener('input', convertFancyText);
                convertFancyText(); // Esegui al caricamento

                
                // --- LOGICA STRUMENTO 2: CSS UNIT CONVERTER ---
                const baseSizeInput = document.getElementById('base-size');
                const inputs = [
                  document.getElementById('px-value'),
                  document.getElementById('pt-value'),
                  document.getElementById('em-value'),
                  document.getElementById('rem-value'),
                  document.getElementById('percent-value')
                ];

                function convertUnits(sourceUnit, sourceValue) {
                  const base = parseFloat(baseSizeInput.value) || 16;
                  let px = sourceValue; // Converti tutto prima in PX

                  // 1. Converti l'input in PX
                  if (sourceUnit === 'pt') {
                    px = sourceValue * (96 / 72); // 1pt = 1/72 inch, 1 inch = 96px
                  } else if (sourceUnit === 'em' || sourceUnit === 'rem') {
                    px = sourceValue * base;
                  } else if (sourceUnit === 'percent') {
                    px = (sourceValue / 100) * base;
                  }
                  
                  // If the input was px, px is already correct
                  if (isNaN(px)) {
                    inputs.forEach(input => { if (input.dataset.unit !== sourceUnit) input.value = ''; });
                    return;
                  }

                  // 2. Distribuisci il valore in PX a tutti gli altri
                  inputs.forEach(input => {
                    const unit = input.dataset.unit;
                    if (unit === sourceUnit) return; // Non aggiornare quello che stiamo digitando

                    let result = 0;
                    if (unit === 'px') {
                      result = px;
                    } else if (unit === 'pt') {
                      result = px * (72 / 96);
                    } else if (unit === 'em' || unit === 'rem') {
                      result = px / base;
                    } else if (unit === 'percent') {
                      result = (px / base) * 100;
                    }
                    
                    // Formatta per evitare numeri enormi
                    if (Math.abs(result) < 0.001) result = 0;
                    input.value = parseFloat(result.toFixed(4));
                  });
                }

                inputs.forEach(input => {
                  input.addEventListener('input', (e) => {
                    const value = parseFloat(e.target.value);
                    const unit = e.target.dataset.unit;
                    convertUnits(unit, value);
                  });
                });
                
                baseSizeInput.addEventListener('input', () => {
                    // Ricalcola tutto basandoti sul valore PX
                    const pxValue = parseFloat(document.getElementById('px-value').value);
                    if (!isNaN(pxValue)) {
                        convertUnits('px', pxValue);
                    }
                });

              });
