    <script>
      // Utility: currency formatting
      function fmt(n) {
        if (!isFinite(n)) return "$0";
        return n.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }
      function fmt2(n) {
        if (!isFinite(n)) return "$0";
        return n.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }
      function fmtPct(n) {
        if (!isFinite(n)) return "0%";
        return n.toLocaleString("en-US", { maximumFractionDigits: 1 }) + "%";
      }

      function monthlyPayment(principal, annualRate, years) {
        const n = years * 12;
        if (principal <= 0 || n <= 0) return 0;
        const r = annualRate / 100 / 12;
        if (r === 0) return principal / n;
        const pow = Math.pow(1 + r, n);
        return (principal * r * pow) / (pow - 1);
      }

      function totalInterest(principal, annualRate, years) {
        const m = monthlyPayment(principal, annualRate, years);
        const n = years * 12;
        return m * n - principal;
      }

      function horizonPaid(monthly, months) {
        return monthly * months;
      }

      function calculateRefi() {
        const errEl = document.getElementById("calc-error");
        errEl.classList.add("hidden");
        errEl.textContent = "";

        const currentBalance =
          parseFloat(document.getElementById("current-balance").value) || 0;
        const currentRate =
          parseFloat(document.getElementById("current-rate").value) || 0;
        const currentYearsRemaining =
          parseFloat(
            document.getElementById("current-years-remaining").value
          ) || 0;
        const currentMonthsPaid =
          parseFloat(document.getElementById("current-months-paid").value) || 0;

        const homeValue =
          parseFloat(document.getElementById("home-value").value) || 0;
        const newRate =
          parseFloat(document.getElementById("new-rate").value) || 0;
        const newTermYears =
          parseFloat(document.getElementById("new-term-years").value) || 0;
        const closingCosts =
          parseFloat(document.getElementById("closing-costs").value) || 0;
        const rollCosts = document.getElementById("roll-costs").value;
        const cashOut =
          parseFloat(document.getElementById("cash-out").value) || 0;
        const maxLtv =
          parseFloat(document.getElementById("max-ltv").value) || 0;

        if (
          currentBalance <= 0 ||
          currentRate < 0 ||
          currentYearsRemaining <= 0 ||
          newRate <= 0 ||
          newTermYears <= 0
        ) {
          errEl.textContent =
            "Please enter valid amounts for loan balance, rates, and terms.";
          errEl.classList.remove("hidden");
          return;
        }
        if (homeValue <= 0) {
          errEl.textContent = "Please enter a positive home value.";
          errEl.classList.remove("hidden");
          return;
        }

        // Current loan
        const currentMonthly = monthlyPayment(
          currentBalance,
          currentRate,
          currentYearsRemaining
        );
        const remainingMonths = Math.round(currentYearsRemaining * 12);
        const currentRemainingInterest =
          currentMonthly * remainingMonths - currentBalance;

        // Approximate interest already paid (optional, not used in main comparison but could be extended)
        const totalOriginalMonths = remainingMonths + currentMonthsPaid;
        let interestPaidSoFar = 0;
        if (currentMonthsPaid > 0 && totalOriginalMonths > 0) {
          const originalYears = totalOriginalMonths / 12;
          const originalMonthly = monthlyPayment(
            currentBalance,
            currentRate,
            originalYears
          );
          const originalPrincipal =
            currentBalance *
            Math.pow(1 + currentRate / 100 / 12, currentMonthsPaid); // rough back-calc not used in UI
          // For simplicity we skip showing this; keeping placeholder for future enhancement.
        }

        // New loan amount
        let newLoanAmount = currentBalance + cashOut;
        if (rollCosts === "yes") {
          newLoanAmount += closingCosts;
        }
        const newMonthly = monthlyPayment(newLoanAmount, newRate, newTermYears);
        const newTotalInterest = totalInterest(
          newLoanAmount,
          newRate,
          newTermYears
        );

        // Monthly savings
        const monthlyDiff = currentMonthly - newMonthly;

        // Break-even
        let breakEvenMonths = null;
        if (monthlyDiff > 0 && closingCosts > 0) {
          breakEvenMonths = closingCosts / monthlyDiff;
        }

        // LTV
        const ltv = (newLoanAmount / homeValue) * 100;
        const ltvWarning = ltv > maxLtv && maxLtv > 0;

        // Horizon analysis
        const horizonYears =
          parseFloat(document.getElementById("horizon-years").value) || 0;
        const horizonMonths = Math.round(horizonYears * 12);
        const horizonCurrentPaid = horizonPaid(currentMonthly, horizonMonths);
        const horizonNewPaid =
          horizonPaid(newMonthly, horizonMonths) +
          (rollCosts === "no" ? closingCosts : 0);
        const horizonSavings = horizonCurrentPaid - horizonNewPaid;

        // Update UI
        document.getElementById("results-section").classList.remove("hidden");

        document.getElementById("current-payment-display").textContent =
          fmt2(currentMonthly);
        document.getElementById("new-payment-display").textContent =
          fmt2(newMonthly);

        const monthlySavingsEl = document.getElementById(
          "monthly-savings-display"
        );
        const monthlyLabelEl = document.getElementById("monthly-savings-label");
        monthlySavingsEl.textContent =
          (monthlyDiff >= 0 ? "+" : "−") + fmt2(Math.abs(monthlyDiff));
        monthlySavingsEl.classList.toggle("text-emerald-700", monthlyDiff >= 0);
        monthlySavingsEl.classList.toggle("text-red-700", monthlyDiff < 0);
        monthlyLabelEl.textContent =
          monthlyDiff >= 0
            ? "Monthly savings vs. current payment"
            : "Higher payment vs. current payment";

        document.getElementById("current-interest-remaining").textContent =
          fmt2(currentRemainingInterest);
        document.getElementById("new-interest-total").textContent =
          fmt2(newTotalInterest);

        const interestSavings = currentRemainingInterest - newTotalInterest;
        const interestSavingsEl = document.getElementById("interest-savings");
        interestSavingsEl.textContent =
          (interestSavings >= 0 ? "+" : "−") + fmt2(Math.abs(interestSavings));
        interestSavingsEl.classList.toggle(
          "text-emerald-700",
          interestSavings >= 0
        );
        interestSavingsEl.classList.toggle("text-red-700", interestSavings < 0);

        document.getElementById("closing-costs-display").textContent =
          fmt2(closingCosts);

        const breakEvenEl = document.getElementById("break-even-display");
        if (
          breakEvenMonths &&
          isFinite(breakEvenMonths) &&
          breakEvenMonths > 0
        ) {
          const years = breakEvenMonths / 12;
          breakEvenEl.textContent = `${breakEvenMonths.toFixed(
            1
          )} months (${years.toFixed(1)} years)`;
        } else {
          breakEvenEl.textContent = "Not applicable";
        }

        document.getElementById("new-loan-amount-display").textContent =
          fmt2(newLoanAmount);
        document.getElementById("cash-out-display").textContent = fmt2(cashOut);
        document.getElementById("ltv-display").textContent = fmtPct(ltv);
        document.getElementById("max-ltv-display").textContent = maxLtv
          ? fmtPct(maxLtv)
          : "—";
        const ltvWarnEl = document.getElementById("ltv-warning");
        if (ltvWarning) {
          ltvWarnEl.classList.remove("hidden");
        } else {
          ltvWarnEl.classList.add("hidden");
        }

        document.getElementById("horizon-current-paid").textContent =
          fmt2(horizonCurrentPaid);
        document.getElementById("horizon-new-paid").textContent =
          fmt2(horizonNewPaid);
        const horizonSavingsEl = document.getElementById("horizon-savings");
        horizonSavingsEl.textContent =
          (horizonSavings >= 0 ? "+" : "−") + fmt2(Math.abs(horizonSavings));
        horizonSavingsEl.classList.toggle(
          "text-emerald-700",
          horizonSavings >= 0
        );
        horizonSavingsEl.classList.toggle("text-red-700", horizonSavings < 0);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const horizonSlider = document.getElementById("horizon-years");
        const horizonOutput = document.getElementById("horizon-years-output");

        calcBtn.addEventListener("click", calculateRefi);

        resetBtn.addEventListener("click", function () {
          document.getElementById("current-balance").value = 320000;
          document.getElementById("current-rate").value = 6.25;
          document.getElementById("current-years-remaining").value = 26;
          document.getElementById("current-months-paid").value = 48;

          document.getElementById("home-value").value = 450000;
          document.getElementById("new-rate").value = 5.25;
          document.getElementById("new-term-years").value = 30;
          document.getElementById("closing-costs").value = 6000;
          document.getElementById("roll-costs").value = "yes";
          document.getElementById("cash-out").value = 0;
          document.getElementById("max-ltv").value = 80;
          document.getElementById("horizon-years").value = 7;
          horizonOutput.textContent = "7 yrs";

          document.getElementById("calc-error").classList.add("hidden");
          document.getElementById("results-section").classList.add("hidden");
        });

        horizonSlider.addEventListener("input", function () {
          const v = parseInt(horizonSlider.value, 10) || 0;
          horizonOutput.textContent = v + " yrs";
          if (
            !document
              .getElementById("results-section")
              .classList.contains("hidden")
          ) {
            calculateRefi();
          }
        });

        // Auto-run initial calculation
        calculateRefi();
      });
    </script>

