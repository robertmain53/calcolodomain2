    <script>
      // Wheel presets: approximate effective diameters in mm (including tyre)
      const wheelPresets = {
        "700x25": 668, // ~ 2096 mm circumference
        "700x32": 676,
        "700x40": 692,
        "650x47": 650,
        "29x2.2": 740,
        "27.5x2.2": 700,
        "26x2.0": 660,
        "20x1.75": 508,
      };

      function parseTeethList(str) {
        return str
          .split(",")
          .map((s) => parseInt(s.trim(), 10))
          .filter((n) => Number.isFinite(n) && n > 0);
      }

      function getWheelDiameterMm() {
        const preset = document.getElementById("wheel-size").value;
        if (preset === "custom") {
          const v = parseFloat(
            document.getElementById("custom-diameter").value
          );
          return Number.isFinite(v) && v > 0 ? v : 668;
        }
        return wheelPresets[preset] || 668;
      }

      function buildCadenceList(mainCadence, mode) {
        const c = mainCadence;
        switch (mode) {
          case "-10,+10":
            return [c - 10, c, c + 10].filter((v) => v > 0);
          case "-20,+20":
            return [c - 20, c - 10, c, c + 10, c + 20].filter((v) => v > 0);
          case "60-100":
            return [60, 70, 80, 90, 100];
          default:
            return [c];
        }
      }

      function formatNumber(value, decimals) {
        return value.toFixed(decimals);
      }

      function calculateGears() {
        const chainrings = parseTeethList(
          document.getElementById("chainrings").value
        );
        const cogs = parseTeethList(document.getElementById("cogs").value);
        const cadence =
          parseFloat(document.getElementById("cadence").value) || 90;
        const cadenceMode = document.getElementById("cadence-range").value;
        const speedUnit = document.getElementById("speed-unit").value;
        const distUnit = document.getElementById("distance-unit").value;

        if (!chainrings.length || !cogs.length) {
          alert("Please enter at least one valid chainring and one valid cog.");
          return;
        }

        const wheelDiameterMm = getWheelDiameterMm();
        const wheelDiameterM = wheelDiameterMm / 1000;
        const wheelDiameterIn = wheelDiameterMm / 25.4;
        const circumferenceM = Math.PI * wheelDiameterM;

        const mainCadence = cadence;
        const cadenceList = buildCadenceList(mainCadence, cadenceMode);

        const rows = [];
        chainrings.forEach((ring) => {
          cogs.forEach((cog) => {
            const ratio = ring / cog;
            const devM = ratio * circumferenceM;
            const dev = distUnit === "m" ? devM : devM * 3.28084;
            const gearInches = ratio * wheelDiameterIn;

            const v_ms = devM * (mainCadence / 60);
            const v = speedUnit === "kph" ? v_ms * 3.6 : v_ms * 2.23694;

            rows.push({
              ring,
              cog,
              ratio,
              gearInches,
              dev,
              devUnit: distUnit === "m" ? "m" : "ft",
              speed: v,
              speedUnit: speedUnit === "kph" ? "km/h" : "mph",
              devM,
            });
          });
        });

        rows.sort((a, b) => a.ratio - b.ratio);

        const tbody = document.getElementById("results-body");
        tbody.innerHTML = "";

        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "hover:bg-blue-50";

          const ratioStr = formatNumber(row.ratio, 2);
          const gearInchesStr = formatNumber(row.gearInches, 1);
          const devStr = formatNumber(row.dev, row.devUnit === "m" ? 2 : 1);
          const speedStr = formatNumber(row.speed, 1);

          tr.innerHTML = `
        <td class="px-2 py-1 text-gray-800">${row.ring}</td>
        <td class="px-2 py-1 text-gray-800">${row.cog}</td>
        <td class="px-2 py-1 text-right text-gray-700">${ratioStr}</td>
        <td class="px-2 py-1 text-right text-gray-700">${gearInchesStr}</td>
        <td class="px-2 py-1 text-right text-gray-700">${devStr} ${row.devUnit}</td>
        <td class="px-2 py-1 text-right text-gray-700">${speedStr} ${row.speedUnit} @ ${mainCadence} rpm</td>
      `;
          tbody.appendChild(tr);
        });

        // Summary cards
        const summaryPanel = document.getElementById("summary-panel");
        if (rows.length) {
          const low = rows[0];
          const high = rows[rows.length - 1];
          const mid = rows[Math.floor(rows.length / 2)];

          const fmt = (r) =>
            `${r.ring}×${r.cog} (${formatNumber(r.ratio, 2)}×)`;
          const fmtExtra = (r) =>
            `${formatNumber(r.gearInches, 1)} gear inches, ${formatNumber(
              r.dev,
              r.devUnit === "m" ? 2 : 1
            )} ${r.devUnit} / rev`;

          document.getElementById("summary-low-gear").textContent = fmt(low);
          document.getElementById("summary-low-extra").textContent =
            fmtExtra(low);

          document.getElementById("summary-mid-gear").textContent = fmt(mid);
          document.getElementById("summary-mid-extra").textContent =
            fmtExtra(mid);

          document.getElementById("summary-high-gear").textContent = fmt(high);
          document.getElementById("summary-high-extra").textContent =
            fmtExtra(high);

          summaryPanel.classList.remove("hidden");
        } else {
          summaryPanel.classList.add("hidden");
        }

        // Store latest rows for CSV export
        window._bikeGearLastRows = rows;
      }

      function exportCsv() {
        const rows = window._bikeGearLastRows || [];
        if (!rows.length) {
          alert("Please calculate a gear table first.");
          return;
        }
        const header = [
          "Chainring teeth",
          "Cog teeth",
          "Gear ratio",
          "Gear inches",
          "Development (m)",
          "Speed at main cadence (km/h)",
          "Speed at main cadence (mph)",
        ];
        const cadence =
          parseFloat(document.getElementById("cadence").value) || 90;

        const lines = [header.join(",")];
        rows.forEach((r) => {
          const v_ms = r.devM * (cadence / 60);
          const v_kph = v_ms * 3.6;
          const v_mph = v_ms * 2.23694;
          lines.push(
            [
              r.ring,
              r.cog,
              formatNumber(r.ratio, 4),
              formatNumber(r.gearInches, 2),
              formatNumber(r.devM, 4),
              formatNumber(v_kph, 2),
              formatNumber(v_mph, 2),
            ].join(",")
          );
        });

        const blob = new Blob([lines.join("\n")], {
          type: "text/csv;charset=utf-8;",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "bike-gear-table.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      function applyPreset() {
        const preset = document.getElementById("bike-type").value;
        const chainringsInput = document.getElementById("chainrings");
        const cogsInput = document.getElementById("cogs");
        const wheelSelect = document.getElementById("wheel-size");

        switch (preset) {
          case "road-compact":
            chainringsInput.value = "50,34";
            cogsInput.value = "11,12,13,14,16,18,20,22,25,28,32";
            wheelSelect.value = "700x25";
            break;
          case "road-race":
            chainringsInput.value = "52,36";
            cogsInput.value = "11,12,13,14,15,17,19,21,24,27,30";
            wheelSelect.value = "700x25";
            break;
          case "gravel":
            chainringsInput.value = "46,30";
            cogsInput.value = "11,13,15,17,19,21,24,28,32,34";
            wheelSelect.value = "700x40";
            break;
          case "mtb-1x":
            chainringsInput.value = "32";
            cogsInput.value = "10,12,14,16,18,21,24,28,33,39,45,51";
            wheelSelect.value = "29x2.2";
            break;
          case "city":
            chainringsInput.value = "38";
            cogsInput.value = "11,13,15,17,19,21,24,28";
            wheelSelect.value = "700x32";
            break;
          default:
            // custom – do nothing
            break;
        }
      }

      function handleWheelPresetChange() {
        const preset = document.getElementById("wheel-size").value;
        if (preset !== "custom") {
          const d = wheelPresets[preset];
          if (d) {
            document.getElementById("custom-diameter").value = d;
          }
        }
      }

      function swapFrontRear() {
        const chainrings = document.getElementById("chainrings").value;
        const cogs = document.getElementById("cogs").value;
        document.getElementById("chainrings").value = cogs;
        document.getElementById("cogs").value = chainrings;
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("bike-type")
          .addEventListener("change", applyPreset);
        document
          .getElementById("wheel-size")
          .addEventListener("change", handleWheelPresetChange);
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateGears);
        document
          .getElementById("export-csv-btn")
          .addEventListener("click", exportCsv);
        document
          .getElementById("swap-front-rear-btn")
          .addEventListener("click", swapFrontRear);

        // Initialize custom diameter from default wheel
        handleWheelPresetChange();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
