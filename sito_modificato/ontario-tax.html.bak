    <script>
      // --- Tax parameters (approximate, for illustration only) ---
      const TAX_DATA = {
        2025: {
          federal: {
            brackets: [
              { upTo: 55867, rate: 0.15 },
              { upTo: 111733, rate: 0.205 },
              { upTo: 173205, rate: 0.26 },
              { upTo: 246752, rate: 0.29 },
              { upTo: Infinity, rate: 0.33 },
            ],
            basicPersonal: 15805,
          },
          ontario: {
            brackets: [
              { upTo: 51446, rate: 0.0505 },
              { upTo: 102894, rate: 0.0915 },
              { upTo: 150000, rate: 0.1116 },
              { upTo: 220000, rate: 0.1216 },
              { upTo: Infinity, rate: 0.1316 },
            ],
            basicPersonal: 12500,
            // Surtax thresholds are on Ontario tax payable before credits
            surtax: [
              { threshold: 5100, rate: 0.2 },
              { threshold: 6600, rate: 0.36 },
            ],
          },
          cpp: {
            rate: 0.0595,
            basicExemption: 3500,
            maxPensionable: 73500,
          },
          ei: {
            rate: 0.0166,
            maxInsurable: 64000,
          },
        },
        2024: {
          // Use same as 2025 for now (can be updated later)
          federal: {
            brackets: [
              { upTo: 55867, rate: 0.15 },
              { upTo: 111733, rate: 0.205 },
              { upTo: 173205, rate: 0.26 },
              { upTo: 246752, rate: 0.29 },
              { upTo: Infinity, rate: 0.33 },
            ],
            basicPersonal: 15805,
          },
          ontario: {
            brackets: [
              { upTo: 51446, rate: 0.0505 },
              { upTo: 102894, rate: 0.0915 },
              { upTo: 150000, rate: 0.1116 },
              { upTo: 220000, rate: 0.1216 },
              { upTo: Infinity, rate: 0.1316 },
            ],
            basicPersonal: 12500,
            surtax: [
              { threshold: 5100, rate: 0.2 },
              { threshold: 6600, rate: 0.36 },
            ],
          },
          cpp: {
            rate: 0.0595,
            basicExemption: 3500,
            maxPensionable: 73500,
          },
          ei: {
            rate: 0.0166,
            maxInsurable: 64000,
          },
        },
      };

      function calcBracketTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, b.upTo - lastLimit);
          if (span > 0) {
            tax += span * b.rate;
            remaining -= span;
          }
          lastLimit = b.upTo;
        }
        return tax;
      }

      function formatMoney(v) {
        if (!isFinite(v)) return "$0";
        return v.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function updateSliderOutput() {
        const slider = document.getElementById("tax-credit-slider");
        const out = document.getElementById("tax-credit-output");
        out.textContent = formatMoney(Number(slider.value));
      }

      function calculateOntarioTax() {
        const year = document.getElementById("tax-year").value;
        const data = TAX_DATA[year];

        const employment =
          Number(document.getElementById("employment-income").value) || 0;
        const selfIncome =
          Number(document.getElementById("self-income").value) || 0;
        const rrsp = Number(document.getElementById("rrsp").value) || 0;
        const otherDed =
          Number(document.getElementById("other-deductions").value) || 0;
        const extraCredits =
          Number(document.getElementById("tax-credit-slider").value) || 0;

        const includeCPP = document.getElementById("include-cpp").checked;
        const includeEI = document.getElementById("include-ei").checked;

        const totalIncome = employment + selfIncome;
        const deductions = rrsp + otherDed;
        const taxableIncome = Math.max(0, totalIncome - deductions);

        // Federal tax before credits
        let fedTax = calcBracketTax(taxableIncome, data.federal.brackets);
        // Ontario tax before credits
        let onTaxBase = calcBracketTax(taxableIncome, data.ontario.brackets);

        // Ontario surtax on base tax
        let surtax = 0;
        for (const s of data.ontario.surtax) {
          if (onTaxBase > s.threshold) {
            surtax += (onTaxBase - s.threshold) * s.rate;
          }
        }
        const onTaxWithSurtax = onTaxBase + surtax;

        // Non-refundable credits (approximate): basic personal + extra credits at lowest rates
        const fedCreditBase = data.federal.basicPersonal + extraCredits;
        const onCreditBase = data.ontario.basicPersonal + extraCredits;

        const fedCredit = fedCreditBase * data.federal.brackets[0].rate;
        const onCredit = onCreditBase * data.ontario.brackets[0].rate;

        const netFedTax = Math.max(0, fedTax - fedCredit);
        const netOnTax = Math.max(0, onTaxWithSurtax - onCredit);

        const totalTax = netFedTax + netOnTax;

        // CPP
        let cpp = 0;
        if (includeCPP) {
          const pensionable = Math.min(
            Math.max(0, employment - data.cpp.basicExemption),
            data.cpp.maxPensionable - data.cpp.basicExemption
          );
          cpp = pensionable * data.cpp.rate;
        }

        // EI
        let ei = 0;
        if (includeEI) {
          const insurable = Math.min(employment, data.ei.maxInsurable);
          ei = insurable * data.ei.rate;
        }

        const cppEiTotal = cpp + ei;
        const afterTaxIncome = totalIncome - totalTax;
        const takeHome = totalIncome - totalTax - cppEiTotal;
        const effectiveRate =
          totalIncome > 0 ? (totalTax / totalIncome) * 100 : 0;

        // Update summary cards
        document.getElementById("after-tax").textContent =
          formatMoney(afterTaxIncome);
        document.getElementById("total-tax").textContent =
          formatMoney(totalTax);
        document.getElementById("cpp-ei").textContent = formatMoney(cppEiTotal);
        document.getElementById("take-home").textContent =
          formatMoney(takeHome);
        document.getElementById(
          "effective-rate"
        ).textContent = `Effective tax rate: ${effectiveRate.toFixed(1)}%`;

        // Update breakdown
        document.getElementById("d-employment").textContent =
          formatMoney(employment);
        document.getElementById("d-self").textContent = formatMoney(selfIncome);
        document.getElementById("d-rrsp").textContent = formatMoney(rrsp);
        document.getElementById("d-other-ded").textContent =
          formatMoney(otherDed);
        document.getElementById("d-taxable").textContent =
          formatMoney(taxableIncome);

        document.getElementById("d-fed-tax").textContent =
          formatMoney(netFedTax);
        document.getElementById("d-on-tax").textContent =
          formatMoney(onTaxBase);
        document.getElementById("d-on-surtax").textContent =
          formatMoney(surtax);
        document.getElementById("d-credits").textContent = formatMoney(
          fedCredit + onCredit
        );
        document.getElementById("d-total-tax").textContent =
          formatMoney(totalTax);

        document.getElementById("d-cpp").textContent = formatMoney(cpp);
        document.getElementById("d-ei").textContent = formatMoney(ei);
      }

      document.addEventListener("DOMContentLoaded", () => {
        updateSliderOutput();
        document
          .getElementById("tax-credit-slider")
          .addEventListener("input", updateSliderOutput);
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateOntarioTax);

        // Recalculate on key inputs blur for responsiveness
        [
          "employment-income",
          "self-income",
          "rrsp",
          "other-deductions",
          "tax-year",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("change", calculateOntarioTax);
        });
        document
          .getElementById("include-cpp")
          .addEventListener("change", calculateOntarioTax);
        document
          .getElementById("include-ei")
          .addEventListener("change", calculateOntarioTax);

        calculateOntarioTax();
      });
    </script>

