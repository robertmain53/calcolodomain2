    <script>
      // Toggle element-specific input sections
      const elementTypeEl = document.getElementById("elementType");
      const beamInputs = document.getElementById("beamInputs");
      const columnInputs = document.getElementById("columnInputs");
      const jointInputs = document.getElementById("jointInputs");

      function updateElementVisibility() {
        const type = elementTypeEl.value;
        beamInputs.classList.toggle("hidden", type !== "beam");
        columnInputs.classList.toggle("hidden", type !== "column");
        jointInputs.classList.toggle("hidden", type !== "joint");
      }
      elementTypeEl.addEventListener("change", updateElementVisibility);
      updateElementVisibility();

      const resultsSummary = document.getElementById("resultsSummary");
      const checksList = document.getElementById("checksList");

      function formatNumber(value, decimals) {
        if (!isFinite(value)) return "–";
        return Number(value).toFixed(decimals);
      }

      function setChecks(items) {
        checksList.innerHTML = "";
        items.forEach((item) => {
          const li = document.createElement("li");
          li.textContent = item.text;
          if (item.status === "ok") {
            li.classList.add("text-green-700");
          } else if (item.status === "warn") {
            li.classList.add("text-yellow-700");
          } else if (item.status === "fail") {
            li.classList.add("text-red-700");
          }
          checksList.appendChild(li);
        });
      }

      document.getElementById("calcBtn").addEventListener("click", () => {
        const type = elementTypeEl.value;
        const gammaRd = parseFloat(document.getElementById("gammaRd").value);
        const gammaF =
          parseFloat(document.getElementById("gammaF").value) || 1.0;
        const gammaTot = gammaRd * gammaF;

        if (!isFinite(gammaTot) || gammaTot <= 0) {
          alert("Please enter valid capacity design factors.");
          return;
        }

        if (type === "beam") {
          const Lb = parseFloat(document.getElementById("beamSpan").value);
          const MplL = parseFloat(document.getElementById("beamMplLeft").value);
          const MplR = parseFloat(
            document.getElementById("beamMplRight").value
          );
          const Vrd = parseFloat(document.getElementById("beamVrd").value);

          if (!Lb || !MplL || !MplR || !Vrd) {
            alert("Please fill in all beam fields with non-zero values.");
            return;
          }

          const MoverL = gammaTot * MplL;
          const MoverR = gammaTot * MplR;
          const Ved = (MoverL + MoverR) / Lb;
          const util = Ved / Vrd;

          resultsSummary.innerHTML = `<p><strong>Beam capacity design shear:</strong></p>
         <p>Overstrength moments: M<sub>over,left</sub> = ${formatNumber(
           MoverL,
           1
         )} kNm, 
         M<sub>over,right</sub> = ${formatNumber(
           MoverR,
           1
         )} kNm (γ<sub>tot</sub> = ${formatNumber(gammaTot, 2)}).</p>
         <p>Design shear from capacity design: 
         V<sub>Ed,CD</sub> = <strong>${formatNumber(Ved, 1)} kN</strong>.</p>
         <p>Provided shear resistance: V<sub>Rd</sub> = ${formatNumber(
           Vrd,
           1
         )} kN 
         (utilization = ${formatNumber(util * 100, 1)}%).</p>`;

          const checks = [];
          if (util <= 1.0) {
            checks.push({
              text: "Beam shear capacity OK: V_Rd ≥ V_Ed,CD.",
              status: "ok",
            });
          } else {
            checks.push({
              text: "Beam shear capacity NOT OK: V_Rd < V_Ed,CD. Increase shear reinforcement or section size.",
              status: "fail",
            });
          }
          checks.push({
            text: "Confirm γ_Rd and any additional factors with the National Annex.",
            status: "warn",
          });
          setChecks(checks);
        } else if (type === "column") {
          const hc = parseFloat(document.getElementById("columnHeight").value);
          const Mtop = parseFloat(document.getElementById("columnMtop").value);
          const Mbot = parseFloat(document.getElementById("columnMbot").value);
          const Vrd = parseFloat(document.getElementById("columnVrd").value);

          if (!hc || !Mtop || !Mbot || !Vrd) {
            alert("Please fill in all column fields with non-zero values.");
            return;
          }

          const MoverTop = gammaTot * Mtop;
          const MoverBot = gammaTot * Mbot;
          const Ved = (MoverTop + MoverBot) / hc;
          const util = Ved / Vrd;

          resultsSummary.innerHTML = `<p><strong>Column capacity design shear:</strong></p>
         <p>Overstrength moments: M<sub>over,top</sub> = ${formatNumber(
           MoverTop,
           1
         )} kNm, 
         M<sub>over,bot</sub> = ${formatNumber(
           MoverBot,
           1
         )} kNm (γ<sub>tot</sub> = ${formatNumber(gammaTot, 2)}).</p>
         <p>Design shear from capacity design: 
         V<sub>Ed,CD</sub> = <strong>${formatNumber(Ved, 1)} kN</strong>.</p>
         <p>Provided shear resistance: V<sub>Rd</sub> = ${formatNumber(
           Vrd,
           1
         )} kN 
         (utilization = ${formatNumber(util * 100, 1)}%).</p>`;

          const checks = [];
          if (util <= 1.0) {
            checks.push({
              text: "Column shear capacity OK: V_Rd ≥ V_Ed,CD.",
              status: "ok",
            });
          } else {
            checks.push({
              text: "Column shear capacity NOT OK: V_Rd < V_Ed,CD. Increase shear reinforcement or section size.",
              status: "fail",
            });
          }
          checks.push({
            text: "Verify that column flexural capacity is compatible with strong-column–weak-beam requirements.",
            status: "warn",
          });
          setChecks(checks);
        } else if (type === "joint") {
          const sumMbeam = parseFloat(
            document.getElementById("jointSumMbeam").value
          );
          const sumMcol = parseFloat(
            document.getElementById("jointSumMcol").value
          );
          const Vrdj = parseFloat(document.getElementById("jointVrd").value);
          const hj = parseFloat(document.getElementById("jointChord").value);

          if (!sumMbeam || !sumMcol || !Vrdj || !hj) {
            alert("Please fill in all joint fields with non-zero values.");
            return;
          }

          const sumMbeamOver = gammaTot * sumMbeam;
          const ratio = sumMcol / sumMbeam;
          const Vedj = sumMbeamOver / hj;
          const util = Vedj / Vrdj;
          const targetRatio = 1.3;

          resultsSummary.innerHTML = `<p><strong>Beam–column joint capacity design:</strong></p>
         <p>Sum of beam plastic moments: ΣM<sub>pl,Rd,beam</sub> = ${formatNumber(
           sumMbeam,
           1
         )} kNm.</p>
         <p>Sum of column design moments: ΣM<sub>Rd,column</sub> = ${formatNumber(
           sumMcol,
           1
         )} kNm.</p>
         <p>Hierarchy ratio R = ΣM<sub>Rd,column</sub> / ΣM<sub>pl,Rd,beam</sub> = 
         <strong>${formatNumber(
           ratio,
           2
         )}</strong> (target ≥ ${targetRatio}).</p>
         <p>Overstrength beam moments: ΣM<sub>pl,over,beam</sub> = ${formatNumber(
           sumMbeamOver,
           1
         )} kNm (γ<sub>tot</sub> = ${formatNumber(gammaTot, 2)}).</p>
         <p>Estimated joint shear from capacity design: 
         V<sub>Ed,j</sub> ≈ <strong>${formatNumber(
           Vedj,
           1
         )} kN</strong> (h<sub>j</sub> = ${formatNumber(hj, 2)} m).</p>
         <p>Joint shear resistance: V<sub>Rd,j</sub> = ${formatNumber(
           Vrdj,
           1
         )} kN 
         (utilization = ${formatNumber(util * 100, 1)}%).</p>`;

          const checks = [];
          if (ratio >= targetRatio) {
            checks.push({
              text: `Strong-column–weak-beam OK: ΣM_Rd,column / ΣM_pl,Rd,beam = ${formatNumber(
                ratio,
                2
              )} ≥ ${targetRatio}.`,
              status: "ok",
            });
          } else {
            checks.push({
              text: `Strong-column–weak-beam NOT satisfied: ratio = ${formatNumber(
                ratio,
                2
              )} < ${targetRatio}. Increase column capacity or reduce beam capacity.`,
              status: "fail",
            });
          }

          if (util <= 1.0) {
            checks.push({
              text: "Joint shear capacity OK: V_Rd,j ≥ V_Ed,j.",
              status: "ok",
            });
          } else {
            checks.push({
              text: "Joint shear capacity NOT OK: V_Rd,j < V_Ed,j. Increase joint confinement or dimensions.",
              status: "fail",
            });
          }

          checks.push({
            text: "Confirm joint shear model and detailing with EN 1998‑1 and the relevant material Eurocode.",
            status: "warn",
          });
          setChecks(checks);
        }
      });

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("gammaRd").value = 1.2;
        document.getElementById("gammaF").value = 1.0;
        document.getElementById("beamSpan").value = 5.0;
        document.getElementById("beamMplLeft").value = 150;
        document.getElementById("beamMplRight").value = 150;
        document.getElementById("beamVrd").value = 250;
        document.getElementById("columnHeight").value = 3.0;
        document.getElementById("columnMtop").value = 200;
        document.getElementById("columnMbot").value = 200;
        document.getElementById("columnVrd").value = 400;
        document.getElementById("jointSumMbeam").value = 300;
        document.getElementById("jointSumMcol").value = 450;
        document.getElementById("jointVrd").value = 500;
        document.getElementById("jointChord").value = 0.6;
        resultsSummary.textContent =
          "Enter data and click “Calculate capacity design” to see results.";
        setChecks([{ text: "No checks performed yet.", status: null }]);
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden");
          menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", expanded ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
