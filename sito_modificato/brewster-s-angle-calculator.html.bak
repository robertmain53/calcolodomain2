    <script>
      // Utility: clamp and numeric parsing
      function toNumber(value, fallback) {
        const v = parseFloat(value);
        return Number.isFinite(v) ? v : fallback;
      }

      function computeBrewsterAngle(n1, n2) {
        if (n1 <= 0 || n2 <= 0) return null;
        const thetaRad = Math.atan(n2 / n1);
        return (thetaRad * 180) / Math.PI;
      }

      function computeSnellTransmittedAngleDeg(n1, n2, thetaIncDeg) {
        const thetaIncRad = (thetaIncDeg * Math.PI) / 180;
        const sinTi = Math.sin(thetaIncRad);
        const ratio = (n1 * sinTi) / n2;
        if (Math.abs(ratio) > 1) return null; // total internal reflection
        const thetaTRad = Math.asin(ratio);
        return (thetaTRad * 180) / Math.PI;
      }

      function fresnelReflectance(n1, n2, thetaIncDeg) {
        const thetaIncRad = (thetaIncDeg * Math.PI) / 180;
        const sinTi = Math.sin(thetaIncRad);
        const sinTt = (n1 * sinTi) / n2;
        if (Math.abs(sinTt) > 1) {
          // total internal reflection
          return { Rs: 100, Rp: 100, tir: true };
        }
        const thetaTRad = Math.asin(sinTt);
        const cosTi = Math.cos(thetaIncRad);
        const cosTt = Math.cos(thetaTRad);

        const rs = (n1 * cosTi - n2 * cosTt) / (n1 * cosTi + n2 * cosTt);
        const rp = (n2 * cosTi - n1 * cosTt) / (n2 * cosTi + n1 * cosTt);
        const Rs = 100 * rs * rs;
        const Rp = 100 * rp * rp;
        return { Rs, Rp, tir: false };
      }

      function updateFromPresets() {
        const m1Preset = document.getElementById("medium1-preset");
        const m2Preset = document.getElementById("medium2-preset");
        const n1Input = document.getElementById("n1");
        const n2Input = document.getElementById("n2");

        m1Preset.addEventListener("change", () => {
          if (m1Preset.value !== "custom") {
            n1Input.value = m1Preset.value;
          }
        });
        m2Preset.addEventListener("change", () => {
          if (m2Preset.value !== "custom") {
            n2Input.value = m2Preset.value;
          }
        });

        document.querySelectorAll(".preset-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const type = btn.getAttribute("data-preset");
            let n1 = 1.0003,
              n2 = 1.5;
            if (type === "air-glass") {
              n1 = 1.0003;
              n2 = 1.5;
            } else if (type === "air-water") {
              n1 = 1.0003;
              n2 = 1.33;
            } else if (type === "air-fused") {
              n1 = 1.0003;
              n2 = 1.46;
            } else if (type === "glass-air") {
              n1 = 1.5;
              n2 = 1.0003;
            }

            document.getElementById("n1").value = n1.toFixed(4);
            document.getElementById("n2").value = n2.toFixed(4);
            m1Preset.value = "custom";
            m2Preset.value = "custom";
            runCalculation();
          });
        });
      }

      function runCalculation() {
        const n1 = toNumber(document.getElementById("n1").value, NaN);
        const n2 = toNumber(document.getElementById("n2").value, NaN);
        const angleSlider = document.getElementById("angle-slider");
        const angleVal = toNumber(angleSlider.value, 0);

        const brewsterDeg = computeBrewsterAngle(n1, n2);
        const brewsterEl = document.getElementById("brewster-deg");
        const geometryEl = document.getElementById("geometry-text");

        if (!Number.isFinite(brewsterDeg)) {
          brewsterEl.textContent = "—";
          geometryEl.innerHTML = "Invalid indices (n₁, n₂ must be &gt; 0).";
        } else {
          brewsterEl.textContent = brewsterDeg.toFixed(2) + "°";

          const thetaT = computeSnellTransmittedAngleDeg(n1, n2, brewsterDeg);
          if (thetaT === null) {
            geometryEl.innerHTML =
              "At Brewster’s angle, Snell’s law predicts total internal reflection (no real transmitted angle).";
          } else {
            const sum = brewsterDeg + thetaT;
            geometryEl.innerHTML =
              "θ<sub>B</sub> ≈ " +
              brewsterDeg.toFixed(2) +
              "°<br>" +
              "θ<sub>t</sub> ≈ " +
              thetaT.toFixed(2) +
              "°<br>" +
              "θ<sub>B</sub> + θ<sub>t</sub> ≈ " +
              sum.toFixed(2) +
              "°";
          }
        }

        // Fresnel reflectance at current slider angle
        const fres = fresnelReflectance(n1, n2, angleVal);
        const RpEl = document.getElementById("Rp-val");
        const RsEl = document.getElementById("Rs-val");
        const angleLabel = document.getElementById("angle-current-label");

        angleLabel.textContent = angleVal.toFixed(1) + "°";

        if (fres.tir) {
          RpEl.textContent = "100% (TIR)";
          RsEl.textContent = "100% (TIR)";
        } else {
          RpEl.textContent = fres.Rp.toFixed(2) + "%";
          RsEl.textContent = fres.Rs.toFixed(2) + "%";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        updateFromPresets();

        const angleSlider = document.getElementById("angle-slider");
        const angleSliderValue = document.getElementById("angle-slider-value");
        angleSlider.addEventListener("input", () => {
          angleSliderValue.textContent =
            parseFloat(angleSlider.value).toFixed(1) + "°";
          runCalculation();
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", runCalculation);
        document
          .getElementById("n1")
          .addEventListener("change", runCalculation);
        document
          .getElementById("n2")
          .addEventListener("change", runCalculation);

        // Initial calculation
        runCalculation();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
