    <script>
      // Utility conversions
      function velocityToKmPerYear(value, unit) {
        const v = Number(value);
        if (!isFinite(v)) return NaN;
        switch (unit) {
          case "mm_yr":
            return v * 1e-6; // mm/yr -> km/yr
          case "cm_yr":
            return v * 1e-5; // cm/yr -> km/yr
          case "km_myr":
            return v * 1e-6; // km/Myr -> km/yr
          default:
            return NaN;
        }
      }

      function timeToYears(value, unit) {
        const t = Number(value);
        if (!isFinite(t)) return NaN;
        switch (unit) {
          case "kyr":
            return t * 1e3;
          case "myr":
            return t * 1e6;
          default:
            return NaN;
        }
      }

      function formatNumber(num, decimals = 2) {
        if (!isFinite(num)) return "—";
        return num.toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        const velocityValue = document.getElementById("velocityValue");
        const velocityUnit = document.getElementById("velocityUnit");
        const timeValue = document.getElementById("timeValue");
        const timeUnit = document.getElementById("timeUnit");
        const timeSlider = document.getElementById("timeSlider");
        const timeSliderLabel = document.getElementById("timeSliderLabel");
        const calcSingleBtn = document.getElementById("calcSingleBtn");
        const singleResults = document.getElementById("singleResults");
        const singleDistanceKm = document.getElementById("singleDistanceKm");
        const singleDistanceMi = document.getElementById("singleDistanceMi");
        const singleVelocityKmMyr = document.getElementById(
          "singleVelocityKmMyr"
        );

        const plateAVel = document.getElementById("plateAVel");
        const plateBVel = document.getElementById("plateBVel");
        const relVelUnit = document.getElementById("relVelUnit");
        const relTimeValue = document.getElementById("relTimeValue");
        const relTimeUnit = document.getElementById("relTimeUnit");
        const calcRelativeBtn = document.getElementById("calcRelativeBtn");
        const relativeResults = document.getElementById("relativeResults");
        const relativeVelocity = document.getElementById("relativeVelocity");
        const relativeDistance = document.getElementById("relativeDistance");
        const relativeType = document.getElementById("relativeType");

        // Sync slider with time input (Myr)
        function syncSliderFromInput() {
          const tVal = parseFloat(timeValue.value);
          const unit = timeUnit.value;
          let myr = unit === "myr" ? tVal : tVal / 1000;
          if (!isFinite(myr)) myr = 0;
          myr = Math.max(0, Math.min(200, myr));
          timeSlider.value = myr;
          timeSliderLabel.textContent = myr + " Myr";
        }

        function syncInputFromSlider() {
          const myr = parseFloat(timeSlider.value);
          timeSliderLabel.textContent = myr + " Myr";
          if (timeUnit.value === "myr") {
            timeValue.value = myr;
          } else {
            timeValue.value = myr * 1000;
          }
        }

        timeSlider.addEventListener("input", syncInputFromSlider);
        timeValue.addEventListener("input", syncSliderFromInput);
        timeUnit.addEventListener("change", syncSliderFromInput);

        // Single plate calculation
        calcSingleBtn.addEventListener("click", function () {
          const v = parseFloat(velocityValue.value);
          const t = parseFloat(timeValue.value);
          if (!isFinite(v) || !isFinite(t) || t < 0) {
            alert(
              "Please enter valid, non-negative values for velocity and time."
            );
            return;
          }

          const vKmYr = velocityToKmPerYear(v, velocityUnit.value);
          const years = timeToYears(t, timeUnit.value);
          if (!isFinite(vKmYr) || !isFinite(years)) {
            alert("Invalid units or values. Please check your inputs.");
            return;
          }

          const distanceKm = vKmYr * years;
          const distanceMi = distanceKm * 0.621371;
          const vKmMyr = vKmYr * 1e6;

          singleDistanceKm.textContent = formatNumber(distanceKm, 1) + " km";
          singleDistanceMi.textContent = formatNumber(distanceMi, 1) + " mi";
          singleVelocityKmMyr.textContent = formatNumber(vKmMyr, 1) + " km/Myr";

          singleResults.classList.remove("hidden");
        });

        // Relative motion calculation
        calcRelativeBtn.addEventListener("click", function () {
          const vA = parseFloat(plateAVel.value);
          const vB = parseFloat(plateBVel.value);
          const t = parseFloat(relTimeValue.value);
          if (!isFinite(vA) || !isFinite(vB) || !isFinite(t) || t < 0) {
            alert(
              "Please enter valid, non-negative values for velocities and time."
            );
            return;
          }

          const vAKmYr = velocityToKmPerYear(vA, relVelUnit.value);
          const vBKmYr = velocityToKmPerYear(vB, relVelUnit.value);
          const years = timeToYears(t, relTimeUnit.value);
          if (!isFinite(vAKmYr) || !isFinite(vBKmYr) || !isFinite(years)) {
            alert("Invalid units or values. Please check your inputs.");
            return;
          }

          const vRelKmYr = vAKmYr - vBKmYr;
          const vRelMmYr = vRelKmYr * 1e6;
          const deltaDistKm = vRelKmYr * years;
          const deltaDistMi = deltaDistKm * 0.621371;

          relativeVelocity.textContent =
            formatNumber(vRelMmYr, 1) +
            " mm/yr (" +
            formatNumber(vRelKmYr * 1e6, 1) +
            " km/Myr)";
          relativeDistance.textContent =
            formatNumber(deltaDistKm, 1) +
            " km (" +
            formatNumber(deltaDistMi, 1) +
            " mi)";

          let typeLabel = "No relative motion";
          let bgClass = "bg-gray-100 text-gray-800";
          if (vRelKmYr > 0) {
            typeLabel = "Divergence (moving apart)";
            bgClass = "bg-emerald-100 text-emerald-800";
          } else if (vRelKmYr < 0) {
            typeLabel = "Convergence (moving together)";
            bgClass = "bg-red-100 text-red-800";
          }
          relativeType.textContent = typeLabel;
          relativeType.className =
            "inline-flex items-center gap-1 px-2 py-0.5 rounded-full result-badge " +
            bgClass;

          relativeResults.classList.remove("hidden");
        });

        // Initialize slider label
        syncSliderFromInput();
      });
    </script>

