    <script>
      (function () {
        const textInput = document.getElementById("text-input");
        const statWords = document.getElementById("stat-words");
        const statChars = document.getElementById("stat-characters");
        const statCharsNoSpace = document.getElementById(
          "stat-characters-nospace"
        );
        const statSentences = document.getElementById("stat-sentences");
        const statParagraphs = document.getElementById("stat-paragraphs");
        const statLines = document.getElementById("stat-lines");
        const statAvgWordsPerSentence = document.getElementById(
          "stat-avg-words-per-sentence"
        );
        const statReadingTime = document.getElementById("stat-reading-time");
        const statSpeakingTime = document.getElementById("stat-speaking-time");
        const statLongestSentence = document.getElementById(
          "stat-longest-sentence"
        );
        const statLongestSentenceLength = document.getElementById(
          "stat-longest-sentence-length"
        );
        const selectionInfo = document.getElementById("selection-info");

        const btnClear = document.getElementById("btn-clear");
        const btnCopy = document.getElementById("btn-copy");
        const btnNormalize = document.getElementById("btn-normalize");

        const minWordLengthSelect = document.getElementById("min-word-length");
        const tabWords = document.getElementById("tab-words");
        const tabBigrams = document.getElementById("tab-bigrams");
        const tabTrigrams = document.getElementById("tab-trigrams");
        const keywordsWords = document.getElementById("keywords-words");
        const keywordsBigrams = document.getElementById("keywords-bigrams");
        const keywordsTrigrams = document.getElementById("keywords-trigrams");
        const keywordsEmpty = document.getElementById("keywords-empty");

        function formatTimeFromWords(words, wpm) {
          if (words === 0) return "0 sec";
          const minutes = words / wpm;
          const totalSeconds = Math.round(minutes * 60);
          const m = Math.floor(totalSeconds / 60);
          const s = totalSeconds % 60;
          if (m === 0) return s + " sec";
          if (s === 0) return m + " min";
          return m + " min " + s + " sec";
        }

        function splitSentences(text) {
          const cleaned = text.replace(/\s+/g, " ").trim();
          if (!cleaned) return [];
          const parts = cleaned.split(/(?<=[\.!?])\s+/);
          return parts.filter((s) => s.trim().length > 0);
        }

        function getWords(text) {
          // Match words with letters or numbers, including apostrophes inside words
          const matches = text.match(/[A-Za-z0-9]+(?:'[A-Za-z0-9]+)*/g);
          return matches || [];
        }

        function buildNGrams(words, n) {
          const grams = [];
          for (let i = 0; i <= words.length - n; i++) {
            grams.push(words.slice(i, i + n).join(" "));
          }
          return grams;
        }

        function countFrequencies(items, minLength) {
          const freq = new Map();
          for (const item of items) {
            const normalized = item.toLowerCase();
            if (normalized.replace(/[^a-z0-9]/gi, "").length < minLength)
              continue;
            freq.set(normalized, (freq.get(normalized) || 0) + 1);
          }
          return Array.from(freq.entries()).sort((a, b) => b[1] - a[1]);
        }

        function renderKeywordList(container, data, totalWords) {
          container.innerHTML = "";
          if (!totalWords || data.length === 0) return;
          const top = data.slice(0, 20);
          for (const [term, count] of top) {
            const density = (count / totalWords) * 100;
            const div = document.createElement("div");
            div.className =
              "flex items-center justify-between bg-gray-50 border border-gray-200 rounded px-2 py-1";
            const left = document.createElement("span");
            left.className =
              "keyword-pill bg-white border border-gray-200 text-gray-800";
            left.textContent = term;
            const right = document.createElement("span");
            right.className = "text-[11px] text-gray-600";
            right.textContent = count + " × • " + density.toFixed(1) + "%";
            div.appendChild(left);
            div.appendChild(right);
            container.appendChild(div);
          }
        }

        function updateStats(fromSelection = false) {
          const text = fromSelection
            ? textInput.value || ""
            : textInput.value || "";
          const lines = text.split(/\r\n|\r|\n/);
          const paragraphs =
            text.trim().length === 0 ? 0 : text.trim().split(/\n\s*\n+/).length;

          const chars = text.length;
          const charsNoSpace = text.replace(/\s/g, "").length;

          const wordsArr = getWords(text);
          const words = wordsArr.length;

          const sentencesArr = splitSentences(text);
          const sentences = sentencesArr.length;

          const avgWordsPerSentence = sentences > 0 ? words / sentences : 0;

          statWords.textContent = words;
          statChars.textContent = chars;
          statCharsNoSpace.textContent = charsNoSpace;
          statSentences.textContent = sentences;
          statParagraphs.textContent = paragraphs;
          statLines.textContent = text.length === 0 ? 0 : lines.length;
          statAvgWordsPerSentence.textContent = avgWordsPerSentence.toFixed(1);

          statReadingTime.textContent = formatTimeFromWords(words, 200);
          statSpeakingTime.textContent = formatTimeFromWords(words, 130);

          // Longest sentence
          let longestSentence = "";
          let longestLen = 0;
          for (const s of sentencesArr) {
            const len = getWords(s).length;
            if (len > longestLen) {
              longestLen = len;
              longestSentence = s.trim();
            }
          }
          statLongestSentence.textContent = longestSentence || "—";
          statLongestSentenceLength.textContent = longestLen;

          // Keyword density
          const minLen = parseInt(minWordLengthSelect.value, 10) || 1;
          if (words === 0) {
            keywordsWords.innerHTML = "";
            keywordsBigrams.innerHTML = "";
            keywordsTrigrams.innerHTML = "";
            keywordsEmpty.classList.remove("hidden");
            return;
          }

          const wordFreq = countFrequencies(wordsArr, minLen);
          const bigrams = buildNGrams(wordsArr, 2);
          const trigrams = buildNGrams(wordsArr, 3);
          const bigramFreq = countFrequencies(bigrams, minLen);
          const trigramFreq = countFrequencies(trigrams, minLen);

          renderKeywordList(keywordsWords, wordFreq, words);
          renderKeywordList(keywordsBigrams, bigramFreq, words);
          renderKeywordList(keywordsTrigrams, trigramFreq, words);

          keywordsEmpty.classList.add("hidden");
        }

        function updateSelectionInfo() {
          const value = textInput.value;
          const start = textInput.selectionStart;
          const end = textInput.selectionEnd;
          if (start === end) {
            selectionInfo.classList.add("hidden");
            selectionInfo.textContent = "";
            updateStats(false);
            return;
          }
          const selected = value.slice(start, end);
          const words = getWords(selected).length;
          const chars = selected.length;
          selectionInfo.textContent = `Selection: ${words} word${
            words !== 1 ? "s" : ""
          }, ${chars} character${chars !== 1 ? "s" : ""}`;
          selectionInfo.classList.remove("hidden");
          // Update main stats based on full text, not selection
          updateStats(false);
        }

        textInput.addEventListener("input", () => {
          updateStats(false);
          updateSelectionInfo();
        });

        textInput.addEventListener("select", updateSelectionInfo);
        textInput.addEventListener("keyup", updateSelectionInfo);
        textInput.addEventListener("click", updateSelectionInfo);

        btnClear.addEventListener("click", () => {
          textInput.value = "";
          updateStats(false);
          selectionInfo.classList.add("hidden");
          selectionInfo.textContent = "";
        });

        btnCopy.addEventListener("click", () => {
          const text = textInput.value;
          if (!navigator.clipboard) {
            textInput.select();
            document.execCommand("copy");
            return;
          }
          navigator.clipboard.writeText(text).catch(() => {
            textInput.select();
            document.execCommand("copy");
          });
        });

        btnNormalize.addEventListener("click", () => {
          let text = textInput.value;
          if (!text) return;
          // Replace multiple spaces with single, trim each line
          text = text
            .replace(/[ \t]+/g, " ")
            .split(/\r\n|\r|\n/)
            .map((line) => line.trimEnd())
            .join("\n")
            .replace(/\n{3,}/g, "\n\n");
          textInput.value = text;
          updateStats(false);
        });

        minWordLengthSelect.addEventListener("change", () =>
          updateStats(false)
        );

        function setActiveTab(active) {
          const tabs = [
            { btn: tabWords, panel: keywordsWords },
            { btn: tabBigrams, panel: keywordsBigrams },
            { btn: tabTrigrams, panel: keywordsTrigrams },
          ];
          tabs.forEach(({ btn, panel }) => {
            const isActive = btn === active;
            btn.classList.toggle("tab-active", isActive);
            btn.classList.toggle("tab-inactive", !isActive);
            panel.classList.toggle("hidden", !isActive);
          });
        }

        tabWords.addEventListener("click", () => setActiveTab(tabWords));
        tabBigrams.addEventListener("click", () => setActiveTab(tabBigrams));
        tabTrigrams.addEventListener("click", () => setActiveTab(tabTrigrams));

        // Initialize
        updateStats(false);
      })();
    </script>

