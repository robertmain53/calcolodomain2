    <script>
      // Toggle UI for Scenario B
      const bEnabledCheckbox = document.getElementById("b_enabled");
      const bToggleTrack = document.getElementById("b_toggle_track");
      const bToggleThumb = document.getElementById("b_toggle_thumb");

      function updateToggleUI() {
        if (bEnabledCheckbox.checked) {
          bToggleTrack.classList.remove("bg-gray-300");
          bToggleTrack.classList.add("bg-blue-500");
          bToggleThumb.classList.add("translate-x-5");
        } else {
          bToggleTrack.classList.add("bg-gray-300");
          bToggleTrack.classList.remove("bg-blue-500");
          bToggleThumb.classList.remove("translate-x-5");
        }
      }
      bEnabledCheckbox.addEventListener("change", updateToggleUI);
      updateToggleUI();

      // Formatting helpers
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "–";
        return (value * 100).toFixed(1) + "%";
      }

      function formatYears(value) {
        if (!isFinite(value) || value <= 0) return "–";
        if (value < 1) {
          const months = value * 12;
          return months.toFixed(1) + " months";
        }
        return value.toFixed(2) + " years";
      }

      function getScenario(prefix) {
        const revenue =
          parseFloat(document.getElementById(prefix + "_revenue").value) || 0;
        const nonHcCosts =
          parseFloat(document.getElementById(prefix + "_non_hc_costs").value) ||
          0;
        const salary =
          parseFloat(document.getElementById(prefix + "_salary").value) || 0;
        const benefits =
          parseFloat(document.getElementById(prefix + "_benefits").value) || 0;
        const training =
          parseFloat(document.getElementById(prefix + "_training").value) || 0;
        const hrPrograms =
          parseFloat(document.getElementById(prefix + "_hr_programs").value) ||
          0;
        const overhead =
          parseFloat(document.getElementById(prefix + "_overhead").value) || 0;
        const employees =
          parseFloat(document.getElementById(prefix + "_employees").value) || 0;

        const hcCost = salary + benefits + training + hrPrograms + overhead;
        const profitLabor = revenue - nonHcCosts - hcCost;
        const totalCosts = nonHcCosts + hcCost;
        const operatingProfit = revenue - totalCosts;

        const hcRoi = hcCost > 0 ? profitLabor / hcCost : NaN;
        const traditionalRoi =
          totalCosts > 0 ? operatingProfit / totalCosts : NaN;
        const revPerFte = employees > 0 ? revenue / employees : NaN;
        const hcPerFte = employees > 0 ? hcCost / employees : NaN;

        return {
          revenue,
          nonHcCosts,
          hcCost,
          profitLabor,
          totalCosts,
          operatingProfit,
          hcRoi,
          traditionalRoi,
          revPerFte,
          hcPerFte,
          employees,
        };
      }

      function updateScenarioResults(prefix, data) {
        document.getElementById(prefix + "_total_hc_cost").textContent =
          formatCurrency(data.hcCost);
        document.getElementById(prefix + "_profit_labor").textContent =
          formatCurrency(data.profitLabor);
        document.getElementById(prefix + "_hc_roi").textContent = isFinite(
          data.hcRoi
        )
          ? formatPercent(data.hcRoi)
          : "–";
        document.getElementById(prefix + "_traditional_roi").textContent =
          isFinite(data.traditionalRoi)
            ? formatPercent(data.traditionalRoi)
            : "–";
        document.getElementById(prefix + "_rev_per_fte").textContent = isFinite(
          data.revPerFte
        )
          ? formatCurrency(data.revPerFte)
          : "–";
        document.getElementById(prefix + "_hc_per_fte").textContent = isFinite(
          data.hcPerFte
        )
          ? formatCurrency(data.hcPerFte)
          : "–";
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const errorMsg = document.getElementById("errorMsg");
          errorMsg.textContent = "";

          const a = getScenario("a");
          if (a.revenue <= 0 || a.employees <= 0) {
            errorMsg.textContent =
              "Please enter at least revenue and employee count for Scenario A.";
            return;
          }

          updateScenarioResults("a", a);

          let b,
            incrementalRoi = NaN,
            payback = NaN,
            deltaProfit = 0,
            deltaCost = 0;

          if (bEnabledCheckbox.checked) {
            b = getScenario("b");
            updateScenarioResults("b", b);

            deltaProfit = b.profitLabor - a.profitLabor;
            deltaCost = b.hcCost - a.hcCost;

            if (deltaCost !== 0) {
              incrementalRoi = deltaProfit / deltaCost;
            }

            if (deltaProfit > 0 && deltaCost > 0) {
              payback = deltaCost / deltaProfit;
            }
          } else {
            // If Scenario B disabled, clear its fields
            document.getElementById("b_total_hc_cost").textContent = "$0";
            document.getElementById("b_profit_labor").textContent = "$0";
            document.getElementById("b_hc_roi").textContent = "–";
            document.getElementById("b_traditional_roi").textContent = "–";
            document.getElementById("b_rev_per_fte").textContent = "$0";
            document.getElementById("b_hc_per_fte").textContent = "$0";
          }

          // Impact vs Scenario A
          document.getElementById("delta_profit_labor").textContent =
            formatCurrency(deltaProfit);
          document.getElementById("delta_hc_cost").textContent =
            formatCurrency(deltaCost);
          document.getElementById("incremental_roi").textContent = isFinite(
            incrementalRoi
          )
            ? formatPercent(incrementalRoi)
            : "–";

          const horizonYears =
            parseFloat(document.getElementById("initiative_years").value) || 1;
          const paybackYears = isFinite(payback) ? payback : NaN;
          document.getElementById("payback_period").textContent =
            formatYears(paybackYears);
        });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          // Reset to initial example values
          const defaults = {
            a_revenue: 5000000,
            a_non_hc_costs: 2500000,
            a_salary: 1500000,
            a_benefits: 300000,
            a_training: 50000,
            a_hr_programs: 75000,
            a_overhead: 200000,
            a_employees: 120,
            b_revenue: 5500000,
            b_non_hc_costs: 2600000,
            b_salary: 1600000,
            b_benefits: 320000,
            b_training: 120000,
            b_hr_programs: 150000,
            b_overhead: 220000,
            b_employees: 125,
            initiative_years: 3,
          };

          Object.keys(defaults).forEach((id) => {
            const el = document.getElementById(id);
            if (el) el.value = defaults[id];
          });

          bEnabledCheckbox.checked = false;
          updateToggleUI();

          document.getElementById("errorMsg").textContent = "";
          // Clear results
          ["a_", "b_"].forEach((prefix) => {
            document.getElementById(prefix + "total_hc_cost").textContent =
              "$0";
            document.getElementById(prefix + "profit_labor").textContent = "$0";
            document.getElementById(prefix + "hc_roi").textContent = "–";
            document.getElementById(prefix + "traditional_roi").textContent =
              "–";
            document.getElementById(prefix + "rev_per_fte").textContent = "$0";
            document.getElementById(prefix + "hc_per_fte").textContent = "$0";
          });
          document.getElementById("delta_profit_labor").textContent = "$0";
          document.getElementById("delta_hc_cost").textContent = "$0";
          document.getElementById("incremental_roi").textContent = "–";
          document.getElementById("payback_period").textContent = "–";
        });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              icon.textContent = "−";
            }
          });
        });
    </script>
  
