    <script>
      // HRA calculator logic
      function formatINR(value) {
        if (!isFinite(value)) return "₹0";
        const rounded = Math.round(value);
        return "₹" + rounded.toLocaleString("en-IN");
      }

      function calculateHRA() {
        const basicInput = document.getElementById("basic-salary");
        const daInput = document.getElementById("da");
        const hraInput = document.getElementById("hra-received");
        const rentInput = document.getElementById("rent-paid");
        const periodSelect = document.getElementById("period");
        const validationMessage = document.getElementById("validation-message");

        const basic = parseFloat(basicInput.value || "0");
        const da = parseFloat(daInput.value || "0");
        const hra = parseFloat(hraInput.value || "0");
        const rent = parseFloat(rentInput.value || "0");
        const cityType =
          document.querySelector('input[name="city-type"]:checked')?.value ||
          "metro";
        const isAnnual = periodSelect.value === "annual";

        // Basic validation
        if (basic <= 0 || hra < 0 || rent < 0) {
          validationMessage.textContent =
            "Please enter positive values for basic salary, HRA and rent.";
          return null;
        }
        if (rent === 0) {
          validationMessage.textContent =
            "Rent paid must be greater than zero to claim HRA exemption.";
          return null;
        }
        validationMessage.textContent = "";

        // Convert to annual for consistent calculation
        const factor = isAnnual ? 1 : 12;
        const basicAnnual = basic * factor;
        const daAnnual = da * factor;
        const hraAnnual = hra * factor;
        const rentAnnual = rent * factor;

        const salaryForHRA = basicAnnual + daAnnual;

        // Rule 1: Actual HRA received
        const rule1 = hraAnnual;

        // Rule 2: 50% or 40% of (Basic + DA)
        const percent = cityType === "metro" ? 0.5 : 0.4;
        const rule2 = salaryForHRA * percent;

        // Rule 3: Rent paid - 10% of (Basic + DA)
        const rule3 = rentAnnual - 0.1 * salaryForHRA;

        const rule3Adjusted = Math.max(0, rule3); // cannot be negative for exemption
        const hraExempt = Math.max(0, Math.min(rule1, rule2, rule3Adjusted));
        const hraTaxable = Math.max(0, hraAnnual - hraExempt);

        return {
          isAnnual,
          hraExempt,
          hraTaxable,
          rule1,
          rule2,
          rule3,
          cityType,
          salaryForHRA,
        };
      }

      function updateResults() {
        const result = calculateHRA();
        if (!result) {
          document.getElementById("results-section").classList.add("hidden");
          return;
        }

        const {
          isAnnual,
          hraExempt,
          hraTaxable,
          rule1,
          rule2,
          rule3,
          cityType,
        } = result;

        const periodLabel = isAnnual
          ? "per year"
          : "per year (based on your monthly inputs)";
        const resultsSection = document.getElementById("results-section");
        const summaryEl = document.getElementById("result-summary");
        const exemptEl = document.getElementById("hra-exempt");
        const taxableEl = document.getElementById("hra-taxable");
        const tableBody = document.getElementById("rules-table-body");

        resultsSection.classList.remove("hidden");

        exemptEl.textContent = formatINR(hraExempt);
        taxableEl.textContent = formatINR(hraTaxable);

        const cityText = cityType === "metro" ? "metro" : "non‑metro";
        summaryEl.textContent =
          "Based on your inputs, your HRA exemption is " +
          formatINR(hraExempt) +
          " " +
          periodLabel +
          ", and " +
          formatINR(hraTaxable) +
          " will be taxable as HRA. City type considered: " +
          cityText +
          ".";

        // Determine which rule is minimum (after adjusting rule3 to not be negative)
        const rule3Adj = Math.max(0, rule3);
        const minVal = Math.min(rule1, rule2, rule3Adj);
        const highlightClass = "bg-green-50";

        const rows = [
          {
            label: "1. Actual HRA received from employer",
            value: rule1,
            isMin: rule1 === minVal,
          },
          {
            label:
              cityType === "metro"
                ? "2. 50% of (Basic + DA) – Metro city"
                : "2. 40% of (Basic + DA) – Non‑metro city",
            value: rule2,
            isMin: rule2 === minVal,
          },
          {
            label: "3. Rent paid − 10% of (Basic + DA)",
            value: rule3Adj,
            isMin: rule3Adj === minVal,
            note:
              rule3 < 0
                ? " (no exemption from this rule as rent ≤ 10% of salary)"
                : "",
          },
        ];

        tableBody.innerHTML = "";
        rows.forEach((row) => {
          const tr = document.createElement("tr");
          if (row.isMin && row.value > 0) {
            tr.classList.add(highlightClass);
          }
          tr.innerHTML = `
        <td class="px-3 py-2 align-top">
          <div class="flex items-center gap-2">
            <span>${row.label}</span>
            ${
              row.isMin && row.value > 0
                ? '<span class="badge bg-green-100 text-green-800 border border-green-300">Least (Exemption)</span>'
                : ""
            }
          </div>
          ${
            row.note
              ? `<div class="text-[11px] text-gray-500 mt-0.5">${row.note}</div>`
              : ""
          }
        </td>
        <td class="px-3 py-2 text-right font-medium">${formatINR(
          row.value
        )}</td>
      `;
          tableBody.appendChild(tr);
        });
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", updateResults);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("hra-form").reset();
        document.getElementById("validation-message").textContent = "";
        document.getElementById("results-section").classList.add("hidden");
      });

      // Recalculate on Enter key in any input
      ["basic-salary", "da", "hra-received", "rent-paid"].forEach((id) => {
        const el = document.getElementById(id);
        el.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            updateResults();
          }
        });
      });

      // Mobile menu script (simple toggle)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
