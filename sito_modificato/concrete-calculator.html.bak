    <script>
      // Utility conversions
      function toFeet(value, unit) {
        if (!value || value <= 0) return 0;
        switch (unit) {
          case "ft":
            return value;
          case "in":
            return value / 12;
          case "yd":
            return value * 3;
          case "m":
            return value * 3.280839895;
          case "cm":
            return value * 0.03280839895;
          default:
            return value;
        }
      }
      function toMeters(value, unit) {
        if (!value || value <= 0) return 0;
        switch (unit) {
          case "m":
            return value;
          case "cm":
            return value / 100;
          case "ft":
            return value * 0.3048;
          case "in":
            return value * 0.0254;
          case "yd":
            return value * 0.9144;
          default:
            return value;
        }
      }

      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round((value + Number.EPSILON) * factor) / factor;
      }

      // Shape handling
      const shapeTabs = document.querySelectorAll(".shape-tab");
      const shapePanels = document.querySelectorAll(".shape-panel");
      let currentShape = "slab";

      shapeTabs.forEach((btn) => {
        btn.addEventListener("click", () => {
          const shape = btn.getAttribute("data-shape");
          currentShape = shape;
          shapeTabs.forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          shapePanels.forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "shape-" + shape);
          });
          document.getElementById("results-section").classList.add("hidden");
          document.getElementById("error-msg").classList.add("hidden");
        });
      });

      // Unit system toggle
      const unitImperialBtn = document.getElementById("unit-imperial");
      const unitMetricBtn = document.getElementById("unit-metric");

      function setUnitSystem(system) {
        if (system === "imperial") {
          unitImperialBtn.classList.add("tab-active");
          unitMetricBtn.classList.remove("tab-active");
          // Set common defaults
          ["slab-length-unit", "slab-width-unit"].forEach(
            (id) => (document.getElementById(id).value = "ft")
          );
          document.getElementById("slab-thickness-unit").value = "in";
          document.getElementById("footing-length-unit").value = "ft";
          document.getElementById("footing-width-unit").value = "ft";
          document.getElementById("footing-depth-unit").value = "in";
          document.getElementById("wall-length-unit").value = "ft";
          document.getElementById("wall-height-unit").value = "ft";
          document.getElementById("wall-thickness-unit").value = "in";
          document.getElementById("column-diameter-unit").value = "in";
          document.getElementById("column-height-unit").value = "ft";
          document.getElementById("stairs-run-unit").value = "ft";
          document.getElementById("stairs-rise-unit").value = "ft";
          document.getElementById("stairs-width-unit").value = "ft";
        } else {
          unitMetricBtn.classList.add("tab-active");
          unitImperialBtn.classList.remove("tab-active");
          ["slab-length-unit", "slab-width-unit"].forEach(
            (id) => (document.getElementById(id).value = "m")
          );
          document.getElementById("slab-thickness-unit").value = "cm";
          document.getElementById("footing-length-unit").value = "m";
          document.getElementById("footing-width-unit").value = "m";
          document.getElementById("footing-depth-unit").value = "cm";
          document.getElementById("wall-length-unit").value = "m";
          document.getElementById("wall-height-unit").value = "m";
          document.getElementById("wall-thickness-unit").value = "cm";
          document.getElementById("column-diameter-unit").value = "cm";
          document.getElementById("column-height-unit").value = "m";
          document.getElementById("stairs-run-unit").value = "m";
          document.getElementById("stairs-rise-unit").value = "m";
          document.getElementById("stairs-width-unit").value = "m";
        }
      }

      unitImperialBtn.addEventListener("click", () =>
        setUnitSystem("imperial")
      );
      unitMetricBtn.addEventListener("click", () => setUnitSystem("metric"));

      // Initial default
      setUnitSystem("imperial");

      function computeVolumeFt3() {
        let vFt3 = 0;
        if (currentShape === "slab") {
          const L =
            parseFloat(document.getElementById("slab-length").value) || 0;
          const W =
            parseFloat(document.getElementById("slab-width").value) || 0;
          const T =
            parseFloat(document.getElementById("slab-thickness").value) || 0;
          const count =
            parseFloat(document.getElementById("slab-count").value) || 1;
          const Lft = toFeet(
            L,
            document.getElementById("slab-length-unit").value
          );
          const Wft = toFeet(
            W,
            document.getElementById("slab-width-unit").value
          );
          const Tft = toFeet(
            T,
            document.getElementById("slab-thickness-unit").value
          );
          vFt3 = Lft * Wft * Tft * count;
        } else if (currentShape === "footing") {
          const L =
            parseFloat(document.getElementById("footing-length").value) || 0;
          const W =
            parseFloat(document.getElementById("footing-width").value) || 0;
          const D =
            parseFloat(document.getElementById("footing-depth").value) || 0;
          const Lft = toFeet(
            L,
            document.getElementById("footing-length-unit").value
          );
          const Wft = toFeet(
            W,
            document.getElementById("footing-width-unit").value
          );
          const Dft = toFeet(
            D,
            document.getElementById("footing-depth-unit").value
          );
          vFt3 = Lft * Wft * Dft;
        } else if (currentShape === "wall") {
          const L =
            parseFloat(document.getElementById("wall-length").value) || 0;
          const H =
            parseFloat(document.getElementById("wall-height").value) || 0;
          const T =
            parseFloat(document.getElementById("wall-thickness").value) || 0;
          const count =
            parseFloat(document.getElementById("wall-count").value) || 1;
          const Lft = toFeet(
            L,
            document.getElementById("wall-length-unit").value
          );
          const Hft = toFeet(
            H,
            document.getElementById("wall-height-unit").value
          );
          const Tft = toFeet(
            T,
            document.getElementById("wall-thickness-unit").value
          );
          vFt3 = Lft * Hft * Tft * count;
        } else if (currentShape === "column") {
          const D =
            parseFloat(document.getElementById("column-diameter").value) || 0;
          const H =
            parseFloat(document.getElementById("column-height").value) || 0;
          const count =
            parseFloat(document.getElementById("column-count").value) || 1;
          const Dft = toFeet(
            D,
            document.getElementById("column-diameter-unit").value
          );
          const Hft = toFeet(
            H,
            document.getElementById("column-height-unit").value
          );
          const r = Dft / 2;
          vFt3 = Math.PI * r * r * Hft * count;
        } else if (currentShape === "stairs") {
          const run =
            parseFloat(document.getElementById("stairs-run").value) || 0;
          const rise =
            parseFloat(document.getElementById("stairs-rise").value) || 0;
          const width =
            parseFloat(document.getElementById("stairs-width").value) || 0;
          const runFt = toFeet(
            run,
            document.getElementById("stairs-run-unit").value
          );
          const riseFt = toFeet(
            rise,
            document.getElementById("stairs-rise-unit").value
          );
          const widthFt = toFeet(
            width,
            document.getElementById("stairs-width-unit").value
          );
          vFt3 = 0.5 * runFt * riseFt * widthFt;
        } else if (currentShape === "custom") {
          const V =
            parseFloat(document.getElementById("custom-volume").value) || 0;
          const unit = document.getElementById("custom-volume-unit").value;
          if (unit === "yd3") vFt3 = V * 27;
          else if (unit === "ft3") vFt3 = V;
          else if (unit === "m3") vFt3 = V * 35.3146667;
        }
        return vFt3;
      }

      function updateResults() {
        const errorMsg = document.getElementById("error-msg");
        let vFt3 = computeVolumeFt3();
        if (!vFt3 || vFt3 <= 0) {
          errorMsg.textContent =
            "Please enter at least one positive dimension.";
          errorMsg.classList.remove("hidden");
          document.getElementById("results-section").classList.add("hidden");
          return;
        }
        errorMsg.classList.add("hidden");

        const wastePct =
          parseFloat(document.getElementById("waste").value) || 0;
        const factor = 1 + (wastePct > 0 ? wastePct / 100 : 0);
        vFt3 *= factor;

        const vYd3 = vFt3 / 27;
        const vM3 = vFt3 / 35.3146667;

        document.getElementById("res-ft3").textContent = roundTo(
          vFt3,
          2
        ).toLocaleString();
        document.getElementById("res-yd3").textContent = roundTo(
          vYd3,
          2
        ).toLocaleString();
        document.getElementById("res-m3").textContent = roundTo(
          vM3,
          3
        ).toLocaleString();
        document.getElementById("res-waste-pct").textContent = roundTo(
          (factor - 1) * 100,
          1
        );

        // Bag counts (US, using ft³)
        const bags40 = vFt3 / 0.3;
        const bags60 = vFt3 / 0.45;
        const bags80 = vFt3 / 0.6;
        document.getElementById("bags-40").textContent =
          Math.ceil(bags40).toLocaleString();
        document.getElementById("bags-60").textContent =
          Math.ceil(bags60).toLocaleString();
        document.getElementById("bags-80").textContent =
          Math.ceil(bags80).toLocaleString();

        // Metric bags (using m³)
        const bags20 = vM3 / 0.009;
        const bags25 = vM3 / 0.011;
        const bags30 = vM3 / 0.013;
        document.getElementById("bags-20kg").textContent =
          Math.ceil(bags20).toLocaleString();
        document.getElementById("bags-25kg").textContent =
          Math.ceil(bags25).toLocaleString();
        document.getElementById("bags-30kg").textContent =
          Math.ceil(bags30).toLocaleString();

        // Weight
        const density = parseFloat(document.getElementById("density").value);
        const densityUnit = document.getElementById("density-unit").value;
        const weightCard = document.getElementById("weight-card");
        if (density && density > 0) {
          let weight;
          let label;
          if (densityUnit === "pcf") {
            weight = vFt3 * density;
            label =
              roundTo(weight, 0).toLocaleString() +
              " lb (" +
              roundTo(weight / 2000, 2).toLocaleString() +
              " tons)";
          } else {
            weight = vM3 * density;
            label =
              roundTo(weight, 0).toLocaleString() +
              " kg (" +
              roundTo(weight / 1000, 2).toLocaleString() +
              " metric tons)";
          }
          document.getElementById("res-weight").textContent = label;
          weightCard.classList.remove("hidden");
        } else {
          weightCard.classList.add("hidden");
        }

        document.getElementById("results-section").classList.remove("hidden");
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", updateResults);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("concrete-form").reset();
        setUnitSystem("imperial");
        document.getElementById("waste").value = 10;
        document.getElementById("results-section").classList.add("hidden");
        document.getElementById("error-msg").classList.add("hidden");
      });

      // Basic accessibility: recalc on Enter in inputs
      document
        .getElementById("concrete-form")
        .addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            updateResults();
          }
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
