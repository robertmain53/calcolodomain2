        function calculateRegression() {
            const inputX = document.getElementById('inputX').value.split(',').map(Number);
            const inputY = document.getElementById('inputY').value.split(',').map(Number);

            if (inputX.length !== inputY.length || inputX.length === 0) {
                alert('Please ensure both input sets are of equal length and not empty.');
                return;
            }

            const n = inputX.length;
            const sumX = inputX.reduce((a, b) => a + b, 0);
            const sumY = inputY.reduce((a, b) => a + b, 0);
            const sumXY = inputX.reduce((sum, x, i) => sum + x * inputY[i], 0);
            const sumXX = inputX.reduce((sum, x) => sum + x * x, 0);

            const slope = (n * sumXY - sumX * sumY) / (n * sumXX - sumX * sumX);
            const intercept = (sumY - slope * sumX) / n;
            const meanX = sumX / n;
            const meanY = sumY / n;
            const ssTotal = inputY.reduce((sum, y) => sum + Math.pow(y - meanY, 2), 0);
            const ssRes = inputY.reduce((sum, y, i) => sum + Math.pow(y - (slope * inputX[i] + intercept), 2), 0);
            const rSquared = 1 - (ssRes / ssTotal);
            const correlation = Math.sqrt(rSquared);

            document.getElementById('slopeValue').textContent = slope.toFixed(2);
            document.getElementById('interceptValue').textContent = intercept.toFixed(2);
            document.getElementById('correlationValue').textContent = correlation.toFixed(2);
        }
    </script>


