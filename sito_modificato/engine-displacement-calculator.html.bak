    <script>
      (function () {
        const PI = Math.PI;
        const IN3_TO_CC = 16.387064;
        const MM_PER_IN = 25.4;

        const boreEl = document.getElementById("bore");
        const boreUnitEl = document.getElementById("boreUnit");
        const strokeEl = document.getElementById("stroke");
        const strokeUnitEl = document.getElementById("strokeUnit");
        const cylEl = document.getElementById("cylinders");
        const dispInputEl = document.getElementById("displacementInput");
        const dispUnitEl = document.getElementById("displacementUnit");

        const errorBox = document.getElementById("errorBox");

        const resultCID = document.getElementById("resultCID");
        const resultL = document.getElementById("resultL");
        const resultCC = document.getElementById("resultCC");
        const resultCIDPer = document.getElementById("resultCIDPer");
        const resultCCPer = document.getElementById("resultCCPer");
        const resultBoreStrokeIn =
          document.getElementById("resultBoreStrokeIn");
        const resultBoreStrokeMm =
          document.getElementById("resultBoreStrokeMm");

        function showError(msg) {
          errorBox.textContent = msg;
          errorBox.classList.remove("hidden");
        }

        function clearError() {
          errorBox.classList.add("hidden");
          errorBox.textContent = "";
        }

        function toInches(value, unit) {
          if (unit === "in") return value;
          return value / MM_PER_IN;
        }

        function fromInchesToMm(valueIn) {
          return valueIn * MM_PER_IN;
        }

        function displacementCIDFromDims(boreIn, strokeIn, cylinders) {
          const radius = boreIn / 2;
          const volPerCyl = PI * radius * radius * strokeIn; // in^3
          return volPerCyl * cylinders;
        }

        function convertCID(cid) {
          const cc = cid * IN3_TO_CC;
          const liters = cc / 1000;
          return { cid, cc, liters };
        }

        function parseInputs(requireDisp = false) {
          clearError();
          const bore = parseFloat(boreEl.value);
          const stroke = parseFloat(strokeEl.value);
          const cyl = parseInt(cylEl.value, 10);
          const dispVal =
            dispInputEl.value === "" ? NaN : parseFloat(dispInputEl.value);

          if (isNaN(bore) || bore <= 0) {
            showError("Please enter a valid positive bore.");
            return null;
          }
          if (isNaN(stroke) || stroke <= 0) {
            showError("Please enter a valid positive stroke.");
            return null;
          }
          if (isNaN(cyl) || cyl <= 0) {
            showError("Please enter a valid positive number of cylinders.");
            return null;
          }
          if (requireDisp && (isNaN(dispVal) || dispVal <= 0)) {
            showError("Please enter a valid positive target displacement.");
            return null;
          }

          return {
            bore,
            stroke,
            cyl,
            dispVal,
            boreUnit: boreUnitEl.value,
            strokeUnit: strokeUnitEl.value,
            dispUnit: dispUnitEl.value,
          };
        }

        function getTargetCID(dispVal, dispUnit) {
          if (dispUnit === "cid") return dispVal;
          if (dispUnit === "cc") return dispVal / IN3_TO_CC;
          if (dispUnit === "l") return (dispVal * 1000) / IN3_TO_CC;
          return NaN;
        }

        function updateResultsFromCID(cid, boreIn, strokeIn, cyl) {
          if (!isFinite(cid) || cid <= 0) {
            resultCID.textContent = "–";
            resultL.textContent = "–";
            resultCC.textContent = "–";
            resultCIDPer.textContent = "–";
            resultCCPer.textContent = "–";
            resultBoreStrokeIn.textContent = "–";
            resultBoreStrokeMm.textContent = "–";
            return;
          }

          const { cc, liters } = convertCID(cid);
          const cidPer = cid / cyl;
          const ccPer = cc / cyl;

          resultCID.textContent = cid.toFixed(1) + " in³";
          resultL.textContent = liters.toFixed(2) + " L";
          resultCC.textContent = cc.toFixed(0) + " cc";
          resultCIDPer.textContent = cidPer.toFixed(2) + " in³ / cyl";
          resultCCPer.textContent = ccPer.toFixed(1) + " cc / cyl";

          if (isFinite(boreIn) && isFinite(strokeIn)) {
            const boreMm = fromInchesToMm(boreIn);
            const strokeMm = fromInchesToMm(strokeIn);
            resultBoreStrokeIn.textContent =
              boreIn.toFixed(4) + " in × " + strokeIn.toFixed(4) + " in";
            resultBoreStrokeMm.textContent =
              boreMm.toFixed(2) + " mm × " + strokeMm.toFixed(2) + " mm";
          } else {
            resultBoreStrokeIn.textContent = "–";
            resultBoreStrokeMm.textContent = "–";
          }
        }

        document
          .getElementById("calcBtn")
          .addEventListener("click", function () {
            const data = parseInputs(false);
            if (!data) return;

            const boreIn = toInches(data.bore, data.boreUnit);
            const strokeIn = toInches(data.stroke, data.strokeUnit);

            const cid = displacementCIDFromDims(boreIn, strokeIn, data.cyl);
            updateResultsFromCID(cid, boreIn, strokeIn, data.cyl);
          });

        document
          .getElementById("solveBoreBtn")
          .addEventListener("click", function () {
            const data = parseInputs(true);
            if (!data) return;

            const targetCID = getTargetCID(data.dispVal, data.dispUnit);
            if (!isFinite(targetCID) || targetCID <= 0) {
              showError("Target displacement is invalid.");
              return;
            }

            const strokeIn = toInches(data.stroke, data.strokeUnit);
            const cidPer = targetCID / data.cyl;
            const boreIn = 2 * Math.sqrt(cidPer / (PI * strokeIn));

            // Update bore field in its current unit
            if (data.boreUnit === "in") {
              boreEl.value = boreIn.toFixed(4);
            } else {
              boreEl.value = fromInchesToMm(boreIn).toFixed(2);
            }

            const cid = displacementCIDFromDims(boreIn, strokeIn, data.cyl);
            updateResultsFromCID(cid, boreIn, strokeIn, data.cyl);
          });

        document
          .getElementById("solveStrokeBtn")
          .addEventListener("click", function () {
            const data = parseInputs(true);
            if (!data) return;

            const targetCID = getTargetCID(data.dispVal, data.dispUnit);
            if (!isFinite(targetCID) || targetCID <= 0) {
              showError("Target displacement is invalid.");
              return;
            }

            const boreIn = toInches(data.bore, data.boreUnit);
            const cidPer = targetCID / data.cyl;
            const radius = boreIn / 2;
            const strokeIn = cidPer / (PI * radius * radius);

            // Update stroke field in its current unit
            if (data.strokeUnit === "in") {
              strokeEl.value = strokeIn.toFixed(4);
            } else {
              strokeEl.value = fromInchesToMm(strokeIn).toFixed(2);
            }

            const cid = displacementCIDFromDims(boreIn, strokeIn, data.cyl);
            updateResultsFromCID(cid, boreIn, strokeIn, data.cyl);
          });

        document
          .getElementById("resetBtn")
          .addEventListener("click", function () {
            boreEl.value = "";
            strokeEl.value = "";
            cylEl.value = "";
            dispInputEl.value = "";
            boreUnitEl.value = "in";
            strokeUnitEl.value = "in";
            dispUnitEl.value = "cid";
            clearError();
            updateResultsFromCID(NaN, NaN, NaN, NaN);
          });

        document.querySelectorAll(".example-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const ex = btn.getAttribute("data-example");
            clearError();
            if (ex === "350") {
              boreEl.value = "4.000";
              strokeEl.value = "3.480";
              cylEl.value = "8";
              boreUnitEl.value = "in";
              strokeUnitEl.value = "in";
            } else if (ex === "302") {
              boreEl.value = "4.000";
              strokeEl.value = "3.000";
              cylEl.value = "8";
              boreUnitEl.value = "in";
              strokeUnitEl.value = "in";
            } else if (ex === "454") {
              boreEl.value = "4.250";
              strokeEl.value = "4.000";
              cylEl.value = "8";
              boreUnitEl.value = "in";
              strokeUnitEl.value = "in";
            } else if (ex === "2000") {
              boreEl.value = "86";
              strokeEl.value = "86";
              cylEl.value = "4";
              boreUnitEl.value = "mm";
              strokeUnitEl.value = "mm";
            }
            document.getElementById("calcBtn").click();
          });
        });

        document.querySelectorAll("#faq .faq-question").forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              icon.textContent = "−";
            } else {
              answer.classList.add("hidden");
              icon.textContent = "+";
            }
          });
        });
      })();
    </script>

