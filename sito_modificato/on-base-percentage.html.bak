    <script>
      // Helper: clamp and parse integer
      function getInt(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseInt(el.value, 10);
        return isNaN(v) || v < 0 ? 0 : v;
      }

      function formatOBP(value) {
        if (!isFinite(value) || value < 0) return ".000";
        if (value > 1) value = 1;
        return value.toFixed(3).replace(/^0/, "");
      }

      function classifyOBP(obp) {
        if (!isFinite(obp) || obp <= 0) return "—";
        if (obp < 0.3) return "Poor";
        if (obp < 0.32) return "Below average";
        if (obp < 0.34) return "Average";
        if (obp < 0.37) return "Good";
        if (obp < 0.4) return "Excellent";
        return "Elite";
      }

      function updateModeDescription(extended) {
        const desc = document.getElementById("mode-description");
        const roeWrapper = document.getElementById("roe-wrapper");
        if (extended) {
          desc.textContent =
            "Extended OBP includes times reached on error (ROE) in the numerator: (H + BB + HBP + ROE) / (AB + BB + HBP + SF).";
          roeWrapper.classList.remove("hidden");
        } else {
          desc.textContent =
            "Standard OBP uses the official MLB formula: (H + BB + HBP) / (AB + BB + HBP + SF).";
          roeWrapper.classList.add("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const modeBasic = document.getElementById("mode-basic");
        const modeExtended = document.getElementById("mode-extended");
        let extendedMode = false;

        modeBasic.addEventListener("click", () => {
          extendedMode = false;
          modeBasic.classList.add("bg-blue-600", "text-white");
          modeBasic.classList.remove(
            "bg-white",
            "text-gray-700",
            "border",
            "border-gray-300"
          );
          modeExtended.classList.remove("bg-blue-600", "text-white");
          modeExtended.classList.add(
            "bg-white",
            "text-gray-700",
            "border",
            "border-gray-300"
          );
          updateModeDescription(false);
        });

        modeExtended.addEventListener("click", () => {
          extendedMode = true;
          modeExtended.classList.add("bg-blue-600", "text-white");
          modeExtended.classList.remove(
            "bg-white",
            "text-gray-700",
            "border",
            "border-gray-300"
          );
          modeBasic.classList.remove("bg-blue-600", "text-white");
          modeBasic.classList.add(
            "bg-white",
            "text-gray-700",
            "border",
            "border-gray-300"
          );
          updateModeDescription(true);
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", () => {
            const H = getInt("hits");
            const BB = getInt("walks");
            const HBP = getInt("hbp");
            const AB = getInt("atbats");
            const SF = getInt("sf");
            const ROE = extendedMode ? getInt("roe") : 0;

            const numerator = H + BB + HBP + ROE;
            const denominator = AB + BB + HBP + SF;

            const obp = denominator > 0 ? numerator / denominator : 0;

            document.getElementById("obp-result").textContent = formatOBP(obp);
            document.getElementById(
              "obp-raw"
            ).textContent = `Raw: ${numerator} ÷ ${denominator} = ${
              denominator > 0 ? obp.toFixed(4) : "0.0000"
            }`;
            document.getElementById(
              "times-on-base"
            ).textContent = `Times on base${
              extendedMode ? " (incl. ROE)" : ""
            }: ${numerator}`;
            document.getElementById(
              "obp-denominator"
            ).textContent = `OBP denominator (AB + BB + HBP + SF): ${denominator}`;
            document.getElementById(
              "quality-label"
            ).textContent = `OBP quality: ${classifyOBP(obp)}`;

            // PA consistency check
            const PA = getInt("pa");
            const SH = getInt("sh");
            const paWarning = document.getElementById("pa-warning");
            if (PA > 0) {
              const expectedPA = AB + BB + HBP + SF + SH;
              const diff = Math.abs(PA - expectedPA);
              if (diff > 1) {
                paWarning.textContent =
                  `Note: Your Plate Appearances (PA = ${PA}) differ from AB + BB + HBP + SF + SH (${expectedPA}) by ${diff}. ` +
                  "Check that you entered stats for the same set of games.";
                paWarning.classList.remove("hidden");
              } else {
                paWarning.classList.add("hidden");
                paWarning.textContent = "";
              }
            } else {
              paWarning.classList.add("hidden");
              paWarning.textContent = "";
            }
          });

        document.getElementById("reset-btn").addEventListener("click", () => {
          ["hits", "walks", "hbp", "atbats", "sf", "roe", "pa", "sh"].forEach(
            (id) => {
              const el = document.getElementById(id);
              if (el) el.value = "0";
            }
          );
          document.getElementById("obp-result").textContent = ".000";
          document.getElementById("obp-raw").textContent =
            "Enter stats and click “Calculate OBP”.";
          document.getElementById("times-on-base").textContent =
            "Times on base: 0";
          document.getElementById("obp-denominator").textContent =
            "OBP denominator: 0";
          document.getElementById("quality-label").textContent =
            "OBP quality: —";
          const paWarning = document.getElementById("pa-warning");
          paWarning.classList.add("hidden");
          paWarning.textContent = "";
        });
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
