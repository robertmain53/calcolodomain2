    <script>
      // Unit conversion helpers
      function toMeters(value, unit) {
        const v = parseFloat(value) || 0;
        if (unit === "ft") return v * 0.3048;
        return v;
      }
      function toSquareMeters(value, unit) {
        const v = parseFloat(value) || 0;
        if (unit === "ft2") return v * 0.092903;
        return v;
      }

      // Geometry calculation
      function updateGeometry() {
        const L = toMeters(
          document.getElementById("length").value,
          document.getElementById("length-unit").value
        );
        const W = toMeters(
          document.getElementById("width").value,
          document.getElementById("width-unit").value
        );
        const H = toMeters(
          document.getElementById("height").value,
          document.getElementById("height-unit").value
        );
        const openings = toSquareMeters(
          document.getElementById("openings-area").value,
          document.getElementById("openings-unit").value
        );
        const useCeiling =
          document.querySelector('input[name="use-ceiling"]:checked')?.value ===
          "yes";

        const perimeter = 2 * (L + W);
        const grossWalls = perimeter * H;
        const netWalls = Math.max(grossWalls - openings, 0);
        const ceiling = useCeiling ? L * W : 0;
        const floor = L * W;

        document.getElementById("net-wall-area").textContent =
          netWalls.toFixed(2);
        document.getElementById("ceiling-area").textContent =
          ceiling.toFixed(2);
        document.getElementById("floor-area").textContent = floor.toFixed(2);

        return { netWalls, ceiling, floor };
      }

      document
        .getElementById("update-geometry")
        .addEventListener("click", updateGeometry);
      window.addEventListener("load", updateGeometry);

      // Tabs
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".tab-btn")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document
            .querySelectorAll(".tab-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById(target).classList.remove("hidden");
        });
      });

      // Paint calc
      document.getElementById("calc-paint").addEventListener("click", () => {
        const geom = updateGeometry();
        const includeCeiling = document.getElementById(
          "paint-include-ceiling"
        ).checked;
        const coverage =
          parseFloat(document.getElementById("paint-coverage").value) || 0;
        const coats =
          parseFloat(document.getElementById("paint-coats").value) || 1;
        const waste =
          parseFloat(document.getElementById("paint-waste").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("paint-unit-cost").value) || 0;

        let area = geom.netWalls;
        if (includeCeiling) area += geom.ceiling;
        area *= coats;

        let litersNet = coverage > 0 ? area / coverage : 0;
        let litersGross = litersNet * (1 + waste / 100);
        const cost = litersGross * unitCost;

        document.getElementById("paint-area-out").textContent = area.toFixed(2);
        document.getElementById("paint-liters-net").textContent =
          litersNet.toFixed(2);
        document.getElementById("paint-liters-gross").textContent =
          litersGross.toFixed(2);
        document.getElementById("paint-cost").textContent = cost.toFixed(2);
        document.getElementById("paint-results").classList.remove("hidden");
      });

      // Drywall calc
      document.getElementById("calc-drywall").addEventListener("click", () => {
        const geom = updateGeometry();
        const includeCeiling = document.getElementById(
          "drywall-include-ceiling"
        ).checked;
        const boardW =
          parseFloat(document.getElementById("drywall-board-width").value) || 0;
        const boardH =
          parseFloat(document.getElementById("drywall-board-height").value) ||
          0;
        const waste =
          parseFloat(document.getElementById("drywall-waste").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("drywall-unit-cost").value) || 0;
        const compoundCoverage =
          parseFloat(document.getElementById("compound-coverage").value) || 0;

        let area = geom.netWalls;
        if (includeCeiling) area += geom.ceiling;

        const boardArea = boardW * boardH;
        let boardsNet = boardArea > 0 ? area / boardArea : 0;
        let boardsGross = boardsNet * (1 + waste / 100);

        boardsNet = Math.ceil(boardsNet);
        boardsGross = Math.ceil(boardsGross);

        const compoundBuckets =
          compoundCoverage > 0 ? area / compoundCoverage : 0;
        const cost = boardsGross * unitCost;

        document.getElementById("drywall-area-out").textContent =
          area.toFixed(2);
        document.getElementById("drywall-boards-net").textContent =
          boardsNet.toString();
        document.getElementById("drywall-boards-gross").textContent =
          boardsGross.toString();
        document.getElementById("compound-buckets").textContent =
          compoundBuckets.toFixed(1);
        document.getElementById("drywall-cost").textContent = cost.toFixed(2);
        document.getElementById("drywall-results").classList.remove("hidden");
      });

      // Insulation type label
      document
        .getElementById("insulation-type")
        .addEventListener("change", (e) => {
          const label = document.getElementById("insulation-coverage-label");
          const type = e.target.value;
          if (type === "batt") label.textContent = "m² / pack";
          else if (type === "board") label.textContent = "m² / board";
          else label.textContent = "m³ / bag";
        });

      // Insulation calc
      document
        .getElementById("calc-insulation")
        .addEventListener("click", () => {
          const geom = updateGeometry();
          const type = document.getElementById("insulation-type").value;
          const coverage =
            parseFloat(document.getElementById("insulation-coverage").value) ||
            0;
          const waste =
            parseFloat(document.getElementById("insulation-waste").value) || 0;
          const unitCost =
            parseFloat(document.getElementById("insulation-unit-cost").value) ||
            0;
          const includeWalls = document.getElementById(
            "insulation-include-walls"
          ).checked;
          const includeCeiling = document.getElementById(
            "insulation-include-ceiling"
          ).checked;

          let designMeasure = 0;
          if (type === "blown") {
            // Approximate volume as area * 0.2 m thickness (user should adjust coverage accordingly)
            if (includeWalls) designMeasure += geom.netWalls * 0.1;
            if (includeCeiling) designMeasure += geom.ceiling * 0.2;
            document.getElementById("insulation-area-unit").textContent = "m³";
          } else {
            if (includeWalls) designMeasure += geom.netWalls;
            if (includeCeiling) designMeasure += geom.ceiling;
            document.getElementById("insulation-area-unit").textContent = "m²";
          }

          let unitsNet = coverage > 0 ? designMeasure / coverage : 0;
          let unitsGross = unitsNet * (1 + waste / 100);
          const cost = unitsGross * unitCost;

          document.getElementById("insulation-area-out").textContent =
            designMeasure.toFixed(2);
          document.getElementById("insulation-units-net").textContent =
            unitsNet.toFixed(2);
          document.getElementById("insulation-units-gross").textContent =
            unitsGross.toFixed(2);
          document.getElementById("insulation-cost").textContent =
            cost.toFixed(2);
          document
            .getElementById("insulation-results")
            .classList.remove("hidden");
        });

      // Siding calc
      document.getElementById("calc-siding").addEventListener("click", () => {
        const area =
          parseFloat(document.getElementById("siding-wall-area").value) || 0;
        const coverage =
          parseFloat(document.getElementById("siding-coverage").value) || 0;
        const waste =
          parseFloat(document.getElementById("siding-waste").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("siding-unit-cost").value) || 0;

        let unitsNet = coverage > 0 ? area / coverage : 0;
        let unitsGross = unitsNet * (1 + waste / 100);
        unitsNet = Math.ceil(unitsNet);
        unitsGross = Math.ceil(unitsGross);
        const cost = unitsGross * unitCost;

        document.getElementById("siding-area-out").textContent =
          area.toFixed(2);
        document.getElementById("siding-units-net").textContent =
          unitsNet.toString();
        document.getElementById("siding-units-gross").textContent =
          unitsGross.toString();
        document.getElementById("siding-cost").textContent = cost.toFixed(2);
        document.getElementById("siding-results").classList.remove("hidden");
      });

      // Roofing calc
      document.getElementById("calc-roofing").addEventListener("click", () => {
        const L = parseFloat(document.getElementById("roof-length").value) || 0;
        const W = parseFloat(document.getElementById("roof-width").value) || 0;
        const rise =
          parseFloat(document.getElementById("roof-rise").value) || 0;
        const run = parseFloat(document.getElementById("roof-run").value) || 1;
        const coverage =
          parseFloat(document.getElementById("roof-coverage").value) || 0;
        const waste =
          parseFloat(document.getElementById("roof-waste").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("roof-unit-cost").value) || 0;

        const slopeFactor = Math.sqrt(1 + Math.pow(rise / run, 2));
        const halfSpan = W / 2;
        const slopeWidth = halfSpan * slopeFactor;
        const roofArea = 2 * L * slopeWidth;

        let unitsNet = coverage > 0 ? roofArea / coverage : 0;
        let unitsGross = unitsNet * (1 + waste / 100);
        unitsNet = Math.ceil(unitsNet);
        unitsGross = Math.ceil(unitsGross);
        const cost = unitsGross * unitCost;

        document.getElementById("roof-area-out").textContent =
          roofArea.toFixed(2);
        document.getElementById("roof-units-net").textContent =
          unitsNet.toString();
        document.getElementById("roof-units-gross").textContent =
          unitsGross.toString();
        document.getElementById("roof-cost").textContent = cost.toFixed(2);
        document.getElementById("roofing-results").classList.remove("hidden");
      });

      // Flooring calc
      document.getElementById("calc-flooring").addEventListener("click", () => {
        const geom = updateGeometry();
        const coverage =
          parseFloat(document.getElementById("flooring-coverage").value) || 0;
        const waste =
          parseFloat(document.getElementById("flooring-waste").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("flooring-unit-cost").value) || 0;
        const customArea = parseFloat(
          document.getElementById("flooring-custom-area").value
        );
        const area = isNaN(customArea) ? geom.floor : customArea;

        let unitsNet = coverage > 0 ? area / coverage : 0;
        let unitsGross = unitsNet * (1 + waste / 100);
        unitsNet = Math.ceil(unitsNet);
        unitsGross = Math.ceil(unitsGross);
        const cost = unitsGross * unitCost;

        document.getElementById("flooring-area-out").textContent =
          area.toFixed(2);
        document.getElementById("flooring-units-net").textContent =
          unitsNet.toString();
        document.getElementById("flooring-units-gross").textContent =
          unitsGross.toString();
        document.getElementById("flooring-cost").textContent = cost.toFixed(2);
        document.getElementById("flooring-results").classList.remove("hidden");
      });

      // Simple FAQ toggle (in addition to global script_faq)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector(".faq-icon");
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden");
            icon.textContent = isHidden ? "−" : "+";
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
