    <script>
      // Utility functions
      const R_J_PER_MOLK = 8.314462618;

      function eaToJPerMol(value, unit) {
        if (!isFinite(value)) return NaN;
        switch (unit) {
          case "Jmol":
            return value;
          case "kJmol":
            return value * 1e3;
          case "kcalmol":
            return value * 4184; // 1 kcal = 4184 J
          default:
            return NaN;
        }
      }

      function tempToK(value, unit) {
        if (!isFinite(value)) return NaN;
        if (unit === "K") return value;
        if (unit === "C") return value + 273.15;
        return NaN;
      }

      function formatSci(x, digits = 3) {
        if (!isFinite(x)) return "NaN";
        if (x === 0) return "0";
        const abs = Math.abs(x);
        if (abs >= 1e-3 && abs < 1e4) {
          return x.toPrecision(digits);
        }
        return x.toExponential(digits);
      }

      // Tabs
      document.querySelectorAll(".arrh-tab").forEach((btn) => {
        btn.addEventListener("click", () => {
          const tab = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".arrh-tab")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          ["single", "double", "plot"].forEach((id) => {
            document
              .getElementById("tab-" + id)
              .classList.toggle("hidden", id !== tab);
          });
        });
      });

      // Single-temperature mode
      document
        .getElementById("single-calc-btn")
        .addEventListener("click", () => {
          const solveFor = document.getElementById("single-solve-for").value;
          const kVal = parseFloat(document.getElementById("single-k").value);
          const kUnitFactor =
            parseFloat(document.getElementById("single-k-unit").value) || 1;
          const AVal = parseFloat(document.getElementById("single-A").value);
          const AUnitFactor =
            parseFloat(document.getElementById("single-A-unit").value) || 1;
          const EaVal = parseFloat(document.getElementById("single-Ea").value);
          const EaUnit = document.getElementById("single-Ea-unit").value;
          const TVal = parseFloat(document.getElementById("single-T").value);
          const TUnit = document.getElementById("single-T-unit").value;

          const errBox = document.getElementById("single-error");
          const resBox = document.getElementById("single-result");
          errBox.classList.add("hidden");
          resBox.classList.add("hidden");

          let k = isFinite(kVal) ? kVal * kUnitFactor : NaN;
          let A = isFinite(AVal) ? AVal * AUnitFactor : NaN;
          let EaJ = eaToJPerMol(EaVal, EaUnit);
          let T = tempToK(TVal, TUnit);

          try {
            let resultText = "";
            let detailText = "";

            if (solveFor === "k") {
              if (!isFinite(A) || !isFinite(EaJ) || !isFinite(T))
                throw new Error("Please enter A, Ea, and T to solve for k.");
              const exponent = -EaJ / (R_J_PER_MOLK * T);
              const kCalc = A * Math.exp(exponent);
              resultText = `k = ${formatSci(
                kCalc
              )} s⁻¹ (assuming A and k are in s⁻¹)`;
              detailText = `Using k = A · exp(−Ea / (R·T)) with Ea = ${formatSci(
                EaJ
              )} J/mol, T = ${formatSci(T)} K.`;
            } else if (solveFor === "A") {
              if (!isFinite(k) || !isFinite(EaJ) || !isFinite(T))
                throw new Error("Please enter k, Ea, and T to solve for A.");
              const exponent = EaJ / (R_J_PER_MOLK * T);
              const ACalc = k * Math.exp(exponent);
              resultText = `A = ${formatSci(ACalc)} (same units as k)`;
              detailText = `Rearranged: A = k · exp(Ea / (R·T)).`;
            } else if (solveFor === "Ea") {
              if (!isFinite(k) || !isFinite(A) || !isFinite(T))
                throw new Error("Please enter k, A, and T to solve for Ea.");
              if (k <= 0 || A <= 0)
                throw new Error("k and A must be positive to compute Ea.");
              const EaCalcJ = -R_J_PER_MOLK * T * Math.log(k / A);
              const EaCalcKJ = EaCalcJ / 1e3;
              resultText = `Ea = ${formatSci(EaCalcKJ)} kJ/mol (${formatSci(
                EaCalcJ
              )} J/mol)`;
              detailText = `From Ea = −R·T·ln(k/A).`;
            } else if (solveFor === "T") {
              if (!isFinite(k) || !isFinite(A) || !isFinite(EaJ))
                throw new Error("Please enter k, A, and Ea to solve for T.");
              if (k <= 0 || A <= 0)
                throw new Error("k and A must be positive to compute T.");
              const denom = R_J_PER_MOLK * Math.log(A / k);
              if (denom === 0)
                throw new Error("A and k cannot be equal when solving for T.");
              const TCalc = EaJ / denom;
              const TCalcC = TCalc - 273.15;
              resultText = `T = ${formatSci(TCalc)} K (${formatSci(
                TCalcC
              )} °C)`;
              detailText = `From T = Ea / (R·ln(A/k)).`;
            }

            document.getElementById("single-result-main").textContent =
              resultText;
            document.getElementById("single-result-detail").textContent =
              detailText;
            resBox.classList.remove("hidden");
          } catch (e) {
            errBox.querySelector("p").textContent = e.message;
            errBox.classList.remove("hidden");
          }
        });

      document
        .getElementById("single-clear-btn")
        .addEventListener("click", () => {
          ["single-k", "single-A", "single-Ea", "single-T"].forEach(
            (id) => (document.getElementById(id).value = "")
          );
          document.getElementById("single-result").classList.add("hidden");
          document.getElementById("single-error").classList.add("hidden");
        });

      // Two-temperature mode
      document
        .getElementById("double-calc-btn")
        .addEventListener("click", () => {
          const solveFor = document.getElementById("double-solve-for").value;
          const k1Val = parseFloat(document.getElementById("double-k1").value);
          const k2Val = parseFloat(document.getElementById("double-k2").value);
          const kUnitFactor =
            parseFloat(document.getElementById("double-k-unit").value) || 1;
          const T1Val = parseFloat(document.getElementById("double-T1").value);
          const T1Unit = document.getElementById("double-T1-unit").value;
          const T2Val = parseFloat(document.getElementById("double-T2").value);
          const T2Unit = document.getElementById("double-T2-unit").value;
          const EaVal = parseFloat(document.getElementById("double-Ea").value);
          const EaUnit = document.getElementById("double-Ea-unit").value;

          const errBox = document.getElementById("double-error");
          const resBox = document.getElementById("double-result");
          errBox.classList.add("hidden");
          resBox.classList.add("hidden");

          let k1 = isFinite(k1Val) ? k1Val * kUnitFactor : NaN;
          let k2 = isFinite(k2Val) ? k2Val * kUnitFactor : NaN;
          let T1 = tempToK(T1Val, T1Unit);
          let T2 = tempToK(T2Val, T2Unit);
          let EaJ = eaToJPerMol(EaVal, EaUnit);

          try {
            let resultText = "";
            let detailText = "";

            if (solveFor === "k2") {
              if (
                !isFinite(k1) ||
                !isFinite(T1) ||
                !isFinite(T2) ||
                !isFinite(EaJ)
              ) {
                throw new Error(
                  "Please enter k₁, Ea, T₁, and T₂ to solve for k₂."
                );
              }
              const factor = Math.exp(
                (-EaJ / R_J_PER_MOLK) * (1 / T2 - 1 / T1)
              );
              const k2Calc = k1 * factor;
              resultText = `k₂ = ${formatSci(k2Calc)} (same units as k₁)`;
              detailText = `Using ln(k₂/k₁) = −Ea/R · (1/T₂ − 1/T₁).`;
            } else if (solveFor === "Ea") {
              if (
                !isFinite(k1) ||
                !isFinite(k2) ||
                !isFinite(T1) ||
                !isFinite(T2)
              ) {
                throw new Error(
                  "Please enter k₁, k₂, T₁, and T₂ to solve for Ea."
                );
              }
              if (k1 <= 0 || k2 <= 0)
                throw new Error("k₁ and k₂ must be positive.");
              const denom = 1 / T2 - 1 / T1;
              if (denom === 0) throw new Error("T₁ and T₂ must be different.");
              const EaCalcJ = (-R_J_PER_MOLK * Math.log(k2 / k1)) / denom;
              const EaCalcKJ = EaCalcJ / 1e3;
              resultText = `Ea = ${formatSci(EaCalcKJ)} kJ/mol (${formatSci(
                EaCalcJ
              )} J/mol)`;
              detailText = `From Ea = −R·ln(k₂/k₁) / (1/T₂ − 1/T₁).`;
            } else if (solveFor === "T2") {
              if (
                !isFinite(k1) ||
                !isFinite(k2) ||
                !isFinite(T1) ||
                !isFinite(EaJ)
              ) {
                throw new Error(
                  "Please enter k₁, k₂, T₁, and Ea to solve for T₂."
                );
              }
              if (k1 <= 0 || k2 <= 0)
                throw new Error("k₁ and k₂ must be positive.");
              const lnRatio = Math.log(k2 / k1);
              const invT2 = 1 / T1 - (R_J_PER_MOLK / EaJ) * lnRatio;
              if (invT2 === 0)
                throw new Error("Computed 1/T₂ is zero; check inputs.");
              const T2Calc = 1 / invT2;
              const T2CalcC = T2Calc - 273.15;
              resultText = `T₂ = ${formatSci(T2Calc)} K (${formatSci(
                T2CalcC
              )} °C)`;
              detailText = `From ln(k₂/k₁) = −Ea/R · (1/T₂ − 1/T₁), solved for T₂.`;
            }

            document.getElementById("double-result-main").textContent =
              resultText;
            document.getElementById("double-result-detail").textContent =
              detailText;
            resBox.classList.remove("hidden");
          } catch (e) {
            errBox.querySelector("p").textContent = e.message;
            errBox.classList.remove("hidden");
          }
        });

      document
        .getElementById("double-clear-btn")
        .addEventListener("click", () => {
          [
            "double-k1",
            "double-k2",
            "double-T1",
            "double-T2",
            "double-Ea",
          ].forEach((id) => (document.getElementById(id).value = ""));
          document.getElementById("double-result").classList.add("hidden");
          document.getElementById("double-error").classList.add("hidden");
        });

      // Arrhenius plot helper
      const plotBody = document.getElementById("plot-table-body");

      function addPlotRow() {
        const rowCount = plotBody.children.length + 1;
        const tr = document.createElement("tr");
        tr.innerHTML = `
      <td class="px-2 py-1 border-b text-gray-700">#${rowCount}</td>
      <td class="px-2 py-1 border-b">
        <input type="number" step="any" class="w-24 border border-gray-300 rounded px-1 py-0.5 text-xs plot-T">
      </td>
      <td class="px-2 py-1 border-b">
        <input type="number" step="any" class="w-28 border border-gray-300 rounded px-1 py-0.5 text-xs plot-k">
      </td>
      <td class="px-2 py-1 border-b text-gray-700 plot-invT"></td>
      <td class="px-2 py-1 border-b text-gray-700 plot-lnk"></td>
    `;
        plotBody.appendChild(tr);
      }

      // Initialize with 4 rows
      for (let i = 0; i < 4; i++) addPlotRow();

      document
        .getElementById("plot-add-row-btn")
        .addEventListener("click", addPlotRow);

      document
        .getElementById("plot-clear-btn")
        .addEventListener("click", () => {
          plotBody.innerHTML = "";
          for (let i = 0; i < 4; i++) addPlotRow();
          document.getElementById("plot-result").classList.add("hidden");
          document.getElementById("plot-error").classList.add("hidden");
        });

      document.getElementById("plot-calc-btn").addEventListener("click", () => {
        const errBox = document.getElementById("plot-error");
        const resBox = document.getElementById("plot-result");
        errBox.classList.add("hidden");
        resBox.classList.add("hidden");

        const rows = Array.from(plotBody.querySelectorAll("tr"));
        const xs = [];
        const ys = [];

        rows.forEach((row) => {
          const TInput = row.querySelector(".plot-T");
          const kInput = row.querySelector(".plot-k");
          const invTCell = row.querySelector(".plot-invT");
          const lnkCell = row.querySelector(".plot-lnk");

          const T = parseFloat(TInput.value);
          const k = parseFloat(kInput.value);

          if (isFinite(T) && isFinite(k) && T > 0 && k > 0) {
            const invT = 1 / T;
            const lnk = Math.log(k);
            xs.push(invT);
            ys.push(lnk);
            invTCell.textContent = formatSci(invT, 4);
            lnkCell.textContent = formatSci(lnk, 4);
          } else {
            invTCell.textContent = "";
            lnkCell.textContent = "";
          }
        });

        if (xs.length < 2) {
          errBox.querySelector("p").textContent =
            "Enter at least two valid (T, k) pairs to estimate activation energy.";
          errBox.classList.remove("hidden");
          return;
        }

        // Simple linear regression y = a + b x
        const n = xs.length;
        const sumX = xs.reduce((a, b) => a + b, 0);
        const sumY = ys.reduce((a, b) => a + b, 0);
        const sumXX = xs.reduce((a, b) => a + b * b, 0);
        const sumXY = xs.reduce((a, b, i) => a + b * ys[i], 0);
        const denom = n * sumXX - sumX * sumX;
        if (denom === 0) {
          errBox.querySelector("p").textContent =
            "Cannot perform regression: all 1/T values are identical.";
          errBox.classList.remove("hidden");
          return;
        }
        const slope = (n * sumXY - sumX * sumY) / denom;
        const intercept = (sumY - slope * sumX) / n;

        const EaJ = -slope * R_J_PER_MOLK;
        const EaKJ = EaJ / 1e3;
        const A = Math.exp(intercept);

        document.getElementById(
          "plot-result-main"
        ).textContent = `Ea ≈ ${formatSci(EaKJ)} kJ/mol (${formatSci(
          EaJ
        )} J/mol), A ≈ ${formatSci(A)} (units of k).`;
        document.getElementById(
          "plot-result-detail"
        ).textContent = `From linear fit ln k = ln A − Ea/R · (1/T). Slope = ${formatSci(
          slope,
          4
        )}, intercept = ${formatSci(intercept, 4)}.`;
        resBox.classList.remove("hidden");
      });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const ans = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = ans.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              ans.classList.remove("hidden");
              icon.textContent = "−";
            }
          });
        });

      // Mobile menu script (defensive if mobile-menu.js not yet loaded)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", (!expanded).toString());
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
