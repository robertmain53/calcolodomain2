                        />
                        <select
                          id="platelets-unit"
                          class="border border-l-0 rounded-r px-2 text-sm bg-gray-50"
                        >
                          <option value="k">×10³/µL</option>
                          <option value="giga">×10⁹/L</option>
                        </select>
                      </div>
                    </div>
                    <div class="flex items-end">
                      <p
                        id="platelets-standardized"
                        class="text-xs text-gray-500"
                      >
                        Standardized: – ×10³/µL
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Liver -->
                <div class="border rounded-lg p-4">
                  <div class="flex items-center justify-between mb-2">
                    <h3 class="font-semibold">3. Liver (Bilirubin)</h3>
                    <span
                      id="liver-score-badge"
                      class="badge bg-gray-100 text-gray-700"
                      >Sub-score: 0</span
                    >
                  </div>
                  <div class="grid md:grid-cols-2 gap-3">
                    <div>
                      <label
