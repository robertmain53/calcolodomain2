    <script>
      // Utility functions
      function toNumber(id) {
        const v = document.getElementById(id)?.value;
        if (v === undefined || v === null || v === "") return null;
        const n = Number(v);
        return isNaN(n) ? null : n;
      }

      function updateBadge(id, score) {
        const el = document.getElementById(id);
        if (!el) return;
        el.textContent = "Sub-score: " + score;
        el.classList.remove(
          "bg-gray-100",
          "bg-green-100",
          "bg-yellow-100",
          "bg-orange-100",
          "bg-red-100",
          "text-gray-700",
          "text-green-800",
          "text-yellow-800",
          "text-orange-800",
          "text-red-800"
        );
        let bg = "bg-gray-100",
          txt = "text-gray-700";
        if (score === 0) {
          bg = "bg-green-100";
          txt = "text-green-800";
        } else if (score === 1) {
          bg = "bg-yellow-100";
          txt = "text-yellow-800";
        } else if (score === 2) {
          bg = "bg-orange-100";
          txt = "text-orange-800";
        } else if (score >= 3) {
          bg = "bg-red-100";
          txt = "text-red-800";
        }
        el.classList.add(bg, txt);
      }

      // Respiratory mode toggle
      document.querySelectorAll('input[name="resp-mode"]').forEach((r) => {
        r.addEventListener("change", () => {
          const mode = document.querySelector(
            'input[name="resp-mode"]:checked'
          ).value;
          document
            .getElementById("resp-pao2-group")
            .classList.toggle("hidden", mode !== "pao2");
          document
            .getElementById("resp-spo2-group")
            .classList.toggle("hidden", mode !== "spo2");
        });
      });

      // Live ratio updates
      function updateRespRatios() {
        const pao2 = toNumber("pao2");
        const fio2 = toNumber("fio2");
        const pao2Unit = document.getElementById("pao2-unit").value;
        const pao2Display = document.getElementById("pao2fio2-display");
        if (pao2 && fio2) {
          let pao2mmhg = pao2;
          if (pao2Unit === "kpa") pao2mmhg = pao2 * 7.50062;
          const ratio = pao2mmhg / (fio2 / 100);
          pao2Display.textContent = "PaO₂/FiO₂: " + ratio.toFixed(0) + " mmHg";
        } else {
          pao2Display.textContent = "PaO₂/FiO₂: –";
        }

        const spo2 = toNumber("spo2");
        const fio2s = toNumber("fio2-spo2");
        const spo2Display = document.getElementById("spo2fio2-display");
        if (spo2 && fio2s) {
          const ratio = spo2 / (fio2s / 100);
          spo2Display.textContent = "SpO₂/FiO₂: " + ratio.toFixed(0);
        } else {
          spo2Display.textContent = "SpO₂/FiO₂: –";
        }
      }

      ["pao2", "fio2", "pao2-unit", "spo2", "fio2-spo2"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateRespRatios);
        if (el && id === "pao2-unit")
          el.addEventListener("change", updateRespRatios);
      });

      // Platelets standardization
      function updatePlateletsStandardized() {
        const plt = toNumber("platelets");
        const unit = document.getElementById("platelets-unit").value;
        const el = document.getElementById("platelets-standardized");
        if (!plt) {
          el.textContent = "Standardized: – ×10³/µL";
          return;
        }
        let k = plt;
        if (unit === "giga") k = plt; // 1×10⁹/L = 1×10³/µL numerically
        el.textContent = "Standardized: " + k.toFixed(0) + " ×10³/µL";
      }
      ["platelets", "platelets-unit"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updatePlateletsStandardized);
        if (el && id === "platelets-unit")
          el.addEventListener("change", updatePlateletsStandardized);
      });

      // Bilirubin standardization
      function updateBilirubinStandardized() {
        const bil = toNumber("bilirubin");
        const unit = document.getElementById("bilirubin-unit").value;
        const el = document.getElementById("bilirubin-standardized");
        if (!bil) {
          el.textContent = "Standardized: – mg/dL";
          return;
        }
        let mgdl = bil;
        if (unit === "umol") mgdl = bil / 17.1;
        el.textContent = "Standardized: " + mgdl.toFixed(2) + " mg/dL";
      }
      ["bilirubin", "bilirubin-unit"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateBilirubinStandardized);
        if (el && id === "bilirubin-unit")
          el.addEventListener("change", updateBilirubinStandardized);
      });

      // Creatinine standardization
      function updateCreatinineStandardized() {
        const cr = toNumber("creatinine");
        const unit = document.getElementById("creatinine-unit").value;
        const el = document.getElementById("creatinine-standardized");
        if (!cr) {
          el.textContent = "Standardized: – mg/dL";
          return;
        }
        let mgdl = cr;
        if (unit === "umol") mgdl = cr / 88.4;
        el.textContent = "Standardized: " + mgdl.toFixed(2) + " mg/dL";
      }
      ["creatinine", "creatinine-unit"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateCreatinineStandardized);
        if (el && id === "creatinine-unit")
          el.addEventListener("change", updateCreatinineStandardized);
      });

      // Cardiovascular summary
      function updateCardioSummary() {
        const map = toNumber("map");
        const norepi = toNumber("norepi") || 0;
        const dopamine = toNumber("dopamine") || 0;
        const epi = toNumber("epi") || 0;
        const vaso = toNumber("vaso") || 0;
        const el = document.getElementById("cardio-summary");

        let parts = [];
        if (map !== null) parts.push("MAP " + map + " mmHg");
        if (dopamine) parts.push("Dopamine " + dopamine + " µg/kg/min");
        if (norepi) parts.push("Norepinephrine " + norepi + " µg/kg/min");
        if (epi) parts.push("Epinephrine " + epi + " µg/kg/min");
        if (vaso) parts.push("Vasopressin " + vaso + " U/min");

        el.textContent = parts.length
          ? "Inputs: " + parts.join(", ")
          : "Worst category: none";
      }
      ["map", "norepi", "dopamine", "epi", "vaso"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateCardioSummary);
      });

      // Core calculation
      function calculateSOFA() {
        // Respiratory
        let respScore = 0,
          respDetail = "Not enough data";
        const mode = document.querySelector(
          'input[name="resp-mode"]:checked'
        ).value;
        if (mode === "pao2") {
          const pao2 = toNumber("pao2");
          const fio2 = toNumber("fio2");
          const unit = document.getElementById("pao2-unit").value;
          if (pao2 && fio2) {
            let pao2mmhg = pao2;
            if (unit === "kpa") pao2mmhg = pao2 * 7.50062;
            const ratio = pao2mmhg / (fio2 / 100);
            respDetail = "PaO₂/FiO₂ ≈ " + ratio.toFixed(0) + " mmHg";
            if (ratio <= 100) respScore = 4;
            else if (ratio <= 200) respScore = 3;
            else if (ratio <= 300) respScore = 2;
            else if (ratio <= 400) respScore = 1;
            else respScore = 0;
          }
        } else {
          const spo2 = toNumber("spo2");
          const fio2s = toNumber("fio2-spo2");
          if (spo2 && fio2s) {
            const ratio = spo2 / (fio2s / 100);
            respDetail = "SpO₂/FiO₂ ≈ " + ratio.toFixed(0);
            // Approximate mapping: lower S/F ~ worse
            if (ratio <= 150) respScore = 4;
            else if (ratio <= 200) respScore = 3;
            else if (ratio <= 250) respScore = 2;
            else if (ratio <= 315) respScore = 1;
            else respScore = 0;
          }
        }
        updateBadge("resp-score-badge", respScore);
        document.getElementById("tbl-resp-score").textContent = respScore;
        document.getElementById("tbl-resp-detail").textContent = respDetail;

        // Coagulation
        let coagScore = 0,
          coagDetail = "Not enough data";
        const plt = toNumber("platelets");
        if (plt !== null) {
          const unit = document.getElementById("platelets-unit").value;
          let k = plt;
          if (unit === "giga") k = plt; // same numeric
          coagDetail = k.toFixed(0) + " ×10³/µL";
          if (k < 20) coagScore = 4;
          else if (k < 50) coagScore = 3;
          else if (k < 100) coagScore = 2;
          else if (k < 150) coagScore = 1;
          else coagScore = 0;
        }
        updateBadge("coag-score-badge", coagScore);
        document.getElementById("tbl-coag-score").textContent = coagScore;
        document.getElementById("tbl-coag-detail").textContent = coagDetail;

        // Liver
        let liverScore = 0,
          liverDetail = "Not enough data";
        const bil = toNumber("bilirubin");
        if (bil !== null) {
          const unit = document.getElementById("bilirubin-unit").value;
          let mgdl = bil;
          if (unit === "umol") mgdl = bil / 17.1;
          liverDetail = mgdl.toFixed(2) + " mg/dL";
          if (mgdl >= 12) liverScore = 4;
          else if (mgdl >= 6) liverScore = 3;
          else if (mgdl >= 2) liverScore = 2;
          else if (mgdl >= 1.2) liverScore = 1;
          else liverScore = 0;
        }
        updateBadge("liver-score-badge", liverScore);
        document.getElementById("tbl-liver-score").textContent = liverScore;
        document.getElementById("tbl-liver-detail").textContent = liverDetail;

        // Cardiovascular
        let cardioScore = 0,
          cardioDetail = "Not enough data";
        const map = toNumber("map");
        const dopamine = toNumber("dopamine") || 0;
        const norepi = toNumber("norepi") || 0;
        const epi = toNumber("epi") || 0;
        // Determine worst category
        if (dopamine > 15 || norepi > 0.1 || epi > 0.1) {
          cardioScore = 4;
          cardioDetail = "High-dose vasopressors";
        } else if (
          (dopamine > 5 && dopamine <= 15) ||
          (norepi > 0 && norepi <= 0.1) ||
          (epi > 0 && epi <= 0.1)
        ) {
          cardioScore = 3;
          cardioDetail = "Moderate-dose vasopressors";
        } else if (dopamine > 0 && dopamine <= 5) {
          cardioScore = 2;
          cardioDetail = "Low-dose dopamine";
        } else if (map !== null && map < 70) {
          cardioScore = 1;
          cardioDetail = "MAP < 70 mmHg, no vasopressors";
        } else if (map !== null) {
          cardioScore = 0;
          cardioDetail = "MAP ≥ 70 mmHg, no vasopressors";
        }
        updateBadge("cardio-score-badge", cardioScore);
        document.getElementById("tbl-cardio-score").textContent = cardioScore;
        document.getElementById("tbl-cardio-detail").textContent = cardioDetail;

        // CNS
        let cnsScore = 0,
          cnsDetail = "Not enough data";
        const gcs = toNumber("gcs");
        if (gcs !== null) {
          cnsDetail = "GCS " + gcs.toFixed(0);
          if (gcs < 6) cnsScore = 4;
          else if (gcs <= 9) cnsScore = 3;
          else if (gcs <= 12) cnsScore = 2;
          else if (gcs <= 14) cnsScore = 1;
          else cnsScore = 0;
        }
        updateBadge("cns-score-badge", cnsScore);
        document.getElementById("tbl-cns-score").textContent = cnsScore;
        document.getElementById("tbl-cns-detail").textContent = cnsDetail;

        // Renal
        let renalScore = 0,
          renalDetail = "Not enough data";
        const cr = toNumber("creatinine");
        const urine = toNumber("urine");
        let crScore = 0,
          urineScore = 0;
        if (cr !== null) {
          const unit = document.getElementById("creatinine-unit").value;
          let mgdl = cr;
          if (unit === "umol") mgdl = cr / 88.4;
          renalDetail = "Creatinine " + mgdl.toFixed(2) + " mg/dL";
          if (mgdl >= 5) crScore = 4;
          else if (mgdl >= 3.5) crScore = 3;
          else if (mgdl >= 2) crScore = 2;
          else if (mgdl >= 1.2) crScore = 1;
          else crScore = 0;
        }
        if (urine !== null) {
          if (urine < 200) urineScore = 4;
          else if (urine < 500) urineScore = 3;
          if (renalDetail === "Not enough data")
            renalDetail = "Urine " + urine.toFixed(0) + " mL/24h";
          else renalDetail += ", urine " + urine.toFixed(0) + " mL/24h";
        }
        renalScore = Math.max(crScore, urineScore);
        updateBadge("renal-score-badge", renalScore);
        document.getElementById("tbl-renal-score").textContent = renalScore;
        document.getElementById("tbl-renal-detail").textContent = renalDetail;

        // Total and interpretation
        const total =
          respScore +
          coagScore +
          liverScore +
          cardioScore +
          cnsScore +
          renalScore;
        document.getElementById("total-sofa").textContent = total.toString();

        let riskCat = "Not enough data";
        let mort = "–";
        if (!isNaN(total)) {
          if (total <= 6) {
            riskCat = "Low risk";
            mort = "< 10–15% (approximate)";
          } else if (total <= 9) {
            riskCat = "Moderate risk";
            mort = "≈ 15–30% (approximate)";
          } else if (total <= 12) {
            riskCat = "High risk";
            mort = "≈ 30–50% (approximate)";
          } else {
            riskCat = "Very high risk";
            mort = "> 50% (approximate)";
          }
        }
        document.getElementById("risk-category").textContent = riskCat;
        document.getElementById("mortality-estimate").textContent = mort;
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateSOFA);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("sofa-form").reset();
        ["pao2fio2-display", "spo2fio2-display"].forEach((id) => {
          const el = document.getElementById(id);
          if (el)
            el.textContent =
              id === "pao2fio2-display" ? "PaO₂/FiO₂: –" : "SpO₂/FiO₂: –";
        });
        document.getElementById("platelets-standardized").textContent =
          "Standardized: – ×10³/µL";
        document.getElementById("bilirubin-standardized").textContent =
          "Standardized: – mg/dL";
        document.getElementById("creatinine-standardized").textContent =
          "Standardized: – mg/dL";
        document.getElementById("cardio-summary").textContent =
          "Worst category: none";
        ["resp", "coag", "liver", "cardio", "cns", "renal"].forEach(
          (prefix) => {
            updateBadge(prefix + "-score-badge", 0);
            document.getElementById("tbl-" + prefix + "-score").textContent =
              "0";
            document.getElementById("tbl-" + prefix + "-detail").textContent =
              "–";
          }
        );
        document.getElementById("total-sofa").textContent = "0";
        document.getElementById("risk-category").textContent =
          "Not yet calculated";
        document.getElementById("mortality-estimate").textContent = "–";
      });
    </script>

