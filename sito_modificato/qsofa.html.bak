    <script>
      // qSOFA calculator logic
      (function () {
        const respInput = document.getElementById("resp-rate");
        const respMeets = document.getElementById("resp-meets");
        const gcsInput = document.getElementById("gcs");
        const acuteAms = document.getElementById("acute-ams");
        const mentalMeets = document.getElementById("mental-meets");
        const sbpInput = document.getElementById("sbp");
        const bpMeets = document.getElementById("bp-meets");
        const suspectedInfection = document.getElementById(
          "suspected-infection"
        );

        const scoreEl = document.getElementById("qsofa-score");
        const riskLabelEl = document.getElementById("qsofa-risk-label");
        const riskDetailEl = document.getElementById("qsofa-risk-detail");
        const infectionWarningEl = document.getElementById("infection-warning");
        const resetBtn = document.getElementById("reset-btn");

        function autoUpdateCriteria() {
          const rr = parseFloat(respInput.value);
          if (!isNaN(rr)) {
            respMeets.checked = rr >= 22;
          }

          const gcs = parseFloat(gcsInput.value);
          if (!isNaN(gcs)) {
            if (gcs < 15) {
              mentalMeets.checked = true;
            } else if (!acuteAms.checked) {
              mentalMeets.checked = false;
            }
          }

          const sbp = parseFloat(sbpInput.value);
          if (!isNaN(sbp)) {
            bpMeets.checked = sbp <= 100;
          }

          updateScore();
        }

        function updateScore() {
          let score = 0;
          if (respMeets.checked) score += 1;
          if (mentalMeets.checked) score += 1;
          if (bpMeets.checked) score += 1;

          scoreEl.textContent = score.toString();

          if (score >= 2) {
            riskLabelEl.textContent = "High risk (qSOFA ≥ 2)";
            riskLabelEl.classList.remove("text-gray-800");
            riskLabelEl.classList.add("text-red-700");
            riskDetailEl.textContent =
              "In adults with suspected infection, qSOFA ≥ 2 is associated with higher risk of in-hospital mortality and should prompt closer monitoring, evaluation for organ dysfunction, and possible escalation of care.";
          } else {
            riskLabelEl.textContent = "Low risk (qSOFA 0–1)";
            riskLabelEl.classList.remove("text-red-700");
            riskLabelEl.classList.add("text-gray-800");
            riskDetailEl.textContent =
              "A low qSOFA score does not rule out sepsis. Continue clinical assessment and monitoring according to local protocols.";
          }

          if (!suspectedInfection.checked && score > 0) {
            infectionWarningEl.classList.remove("hidden");
          } else {
            infectionWarningEl.classList.add("hidden");
          }
        }

        function resetForm() {
          document.getElementById("qsofa-form").reset();
          scoreEl.textContent = "0";
          riskLabelEl.textContent = "Low risk (qSOFA 0–1)";
          riskLabelEl.classList.remove("text-red-700");
          riskLabelEl.classList.add("text-gray-800");
          riskDetailEl.textContent =
            "In adults with suspected infection, qSOFA ≥ 2 suggests higher risk of poor outcome and should prompt closer monitoring and evaluation.";
          infectionWarningEl.classList.add("hidden");
        }

        ["input", "change"].forEach((evt) => {
          respInput.addEventListener(evt, autoUpdateCriteria);
          gcsInput.addEventListener(evt, autoUpdateCriteria);
          sbpInput.addEventListener(evt, autoUpdateCriteria);
          acuteAms.addEventListener(evt, () => {
            if (acuteAms.checked) {
              mentalMeets.checked = true;
            } else {
              const gcs = parseFloat(gcsInput.value);
              if (!isNaN(gcs) && gcs === 15) {
                mentalMeets.checked = false;
              }
            }
            updateScore();
          });
          respMeets.addEventListener(evt, updateScore);
          mentalMeets.addEventListener(evt, updateScore);
          bpMeets.addEventListener(evt, updateScore);
          suspectedInfection.addEventListener(evt, updateScore);
        });

        resetBtn.addEventListener("click", resetForm);

        // Initialize
        updateScore();
      })();
    </script>

