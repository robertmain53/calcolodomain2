    <script>
      // Tab logic
      const tabCircle = document.getElementById('tab-circle');
      const tabWood   = document.getElementById('tab-wood');
      const tabSms    = document.getElementById('tab-sms');

      const panelCircle = document.getElementById('panel-circle');
      const panelWood   = document.getElementById('panel-wood');
      const panelSms    = document.getElementById('panel-sms');

      function activateTab(btn, panel) {
        [tabCircle, tabWood, tabSms].forEach(b => b.classList.remove('tab-active'));
        btn.classList.add('tab-active');
        [panelCircle, panelWood, panelSms].forEach(p => p.classList.add('hidden'));
        panel.classList.remove('hidden');
      }

      tabCircle.addEventListener('click', () => activateTab(tabCircle, panelCircle));
      tabWood.addEventListener('click', () => activateTab(tabWood, panelWood));
      tabSms.addEventListener('click', () => activateTab(tabSms, panelSms));

      // Circle mode toggle
      const circleModeInputs = document.getElementsByName('circle-mode');
      const circleRh = document.getElementById('circle-rh-inputs');
      const circleRc = document.getElementById('circle-rc-inputs');

      circleModeInputs.forEach(r => {
        r.addEventListener('change', () => {
          if (r.value === 'rh' && r.checked) {
            circleRh.classList.remove('hidden');
            circleRc.classList.add('hidden');
          } else if (r.value === 'rc' && r.checked) {
            circleRh.classList.add('hidden');
            circleRc.classList.remove('hidden');
          }
        });
      });

      const btnCalc = document.getElementById('btn-calc');
      const btnClear = document.getElementById('btn-clear');

      const resBox = document.getElementById('results-box');
      const resMain = document.getElementById('res-main');
      const resSec = document.getElementById('res-sec');
      const resExtra1 = document.getElementById('res-extra1');
      const resExtra2 = document.getElementById('res-extra2');
      const resNotes = document.getElementById('res-notes');

      function round4(x) {
        return Math.round((x + Number.EPSILON) * 10000) / 10000;
      }

      function isGsmChar(ch) {
        // Basic GSM 03.38 set (simplified, enough to distinguish most Unicode)
        const gsm = "@£$¥èéùìòÇ\nØø\rÅåΔ_ΦΓΛΩΠΨΣΘΞÆæßÉ !\"#¤%&'()*+,-./0123456789:;<=>?¡ABCDEFGHIJKLMNOPQRSTUVWXYZÄÖÑÜ`¿abcdefghijklmnopqrstuvwxyzäöñüà";
        return gsm.indexOf(ch) !== -1;
      }

      btnCalc.addEventListener('click', () => {
        resBox.classList.remove('hidden');

        // Circle
        if (!panelCircle.classList.contains('hidden')) {
          const mode = Array.from(circleModeInputs).find(x => x.checked).value;
          if (mode === 'rh') {
            const r = parseFloat(document.getElementById('c-r').value);
            const h = parseFloat(document.getElementById('c-h').value);
            const hp = parseFloat(document.getElementById('c-hprism').value);
            if (isNaN(r) || isNaN(h) || r <= 0 || h <= 0 || h >= r) {
              resMain.textContent = 'Invalid radius/height';
              resSec.textContent = '—';
              resExtra1.textContent = '—';
              resExtra2.textContent = '—';
              resNotes.textContent = 'Height must be > 0 and < radius.';
              return;
            }
            const theta = 2 * Math.acos((r - h) / r); // rad
            const area = (r*r/2) * (theta - Math.sin(theta));
            const chord = Math.sqrt(2*r*h - h*h) * 2;
            const arc = r * theta;
            const perim = arc + chord;
            let volume = '—';
            if (!isNaN(hp) && hp > 0) {
              volume = round4(area * hp);
            }
            resMain.textContent = 'Segment area = ' + round4(area);
            resSec.textContent = 'Arc length = ' + round4(arc);
            resExtra1.textContent = 'Chord = ' + round4(chord);
            resExtra2.textContent = 'Perimeter = ' + round4(perim) + (volume !== '—' ? ' | Volume = ' + volume : '');
            resNotes.textContent = 'Central angle = ' + round4(theta * 180 / Math.PI) + '°';
          } else {
            const r = parseFloat(document.getElementById('c-r2').value);
            const c = parseFloat(document.getElementById('c-chord').value);
            const hp = parseFloat(document.getElementById('c-hprism2').value);
            if (isNaN(r) || isNaN(c) || r <= 0 || c <= 0 || c > 2*r) {
              resMain.textContent = 'Invalid radius/chord';
              resSec.textContent = '—';
              resExtra1.textContent = '—';
              resExtra2.textContent = '—';
              resNotes.textContent = 'Chord must be ≤ diameter.';
              return;
            }
            const theta = 2 * Math.asin(c / (2*r));
            const h = r - Math.sqrt(r*r - (c/2)*(c/2));
            const area = (r*r/2) * (theta - Math.sin(theta));
            const arc = r * theta;
            const perim = arc + c;
            let volume = '—';
            if (!isNaN(hp) && hp > 0) {
              volume = round4(area * hp);
            }
            resMain.textContent = 'Segment area = ' + round4(area);
            resSec.textContent = 'Arc length = ' + round4(arc);
            resExtra1.textContent = 'Height = ' + round4(h);
            resExtra2.textContent = 'Perimeter = ' + round4(perim) + (volume !== '—' ? ' | Volume = ' + volume : '');
            resNotes.textContent = 'Central angle = ' + round4(theta * 180 / Math.PI) + '°';
          }

        // Woodturning
        } else if (!panelWood.classList.contains('hidden')) {
          const D = parseFloat(document.getElementById('w-outer').value);
          const width = parseFloat(document.getElementById('w-width').value);
          const N = parseInt(document.getElementById('w-segments').value, 10);
          const kerf = parseFloat(document.getElementById('w-kerf').value);
          if (isNaN(D) || isNaN(width) || isNaN(N) || D <= 0 || width <= 0 || N <= 2) {
            resMain.textContent = 'Invalid inputs for ring.';
            resSec.textContent = '—';
            resExtra1.textContent = '—';
            resExtra2.textContent = '—';
            resNotes.textContent = 'Need outer diameter, ring width, and at least 3 segments.';
            return;
          }
          const innerD = D - 2*width;
          const outerCirc = Math.PI * D;
          let segLenOuter = outerCirc / N;
          if (!isNaN(kerf) && kerf > 0) {
            segLenOuter = segLenOuter - kerf;
          }
          const miter = 180 / N;
          const innerCirc = innerD > 0 ? Math.PI * innerD : null;
          const segLenInner = innerCirc ? innerCirc / N : null;

          resMain.textContent = 'Outer segment length = ' + round4(segLenOuter);
          resSec.textContent = 'Miter angle per cut = ' + round4(miter) + '°';
          resExtra1.textContent = innerCirc ? 'Inner segment length = ' + round4(segLenInner) : 'Inner diameter ≤ 0 (reduce ring width).';
          resExtra2.textContent = 'Outer circumference = ' + round4(outerCirc);
          resNotes.textContent = 'Each segment has 2 miters of ' + round4(miter) + '°. Total segments: ' + N + '.';
        
        // SMS
        } else {
          const text = document.getElementById('sms-text').value || '';
          const len = text.length;
          let isGsm = true;
          for (let i = 0; i < text.length; i++) {
            if (!isGsmChar(text[i])) {
              isGsm = false;
              break;
            }
          }
          let segments, charsPerSeg, scheme;
          if (isGsm) {
            scheme = 'GSM 7-bit';
            if (len <= 160) {
              segments = 1;
              charsPerSeg = 160;
            } else {
              segments = Math.ceil(len / 153);
              charsPerSeg = 153;
            }
          } else {
            scheme = 'Unicode (UCS-2)';
            if (len <= 70) {
              segments = 1;
              charsPerSeg = 70;
            } else {
              segments = Math.ceil(len / 67);
              charsPerSeg = 67;
            }
          }
          resMain.textContent = 'Segments = ' + segments;
          resSec.textContent = 'Characters = ' + len;
          resExtra1.textContent = 'Encoding = ' + scheme;
          resExtra2.textContent = 'Chars per segment = ' + charsPerSeg;
          resNotes.textContent = 'Concatenated SMS reduces per-segment capacity (153 GSM, 67 Unicode).';
        }
      });

      btnClear.addEventListener('click', () => {
        document.getElementById('c-r').value = 10;
        document.getElementById('c-h').value = 3;
        document.getElementById('c-hprism').value = '';
        document.getElementById('c-r2').value = 10;
        document.getElementById('c-chord').value = 12;
        document.getElementById('c-hprism2').value = '';
        document.getElementById('w-outer').value = 200;
        document.getElementById('w-width').value = 20;
        document.getElementById('w-segments').value = 12;
        document.getElementById('w-kerf').value = '';
        document.getElementById('sms-text').value = 'Hello, this is a test SMS message.';
        resBox.classList.add('hidden');
      });
    </script>

