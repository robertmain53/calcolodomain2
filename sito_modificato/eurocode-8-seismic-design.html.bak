        document.getElementById("TD").value = 2.0;
        document.getElementById("eta").value = 1.0;
        document.getElementById("ductilityClass").value = "DCM";
        document.getElementById("systemType").value = "moment";
        document.getElementById("q").value = 3.0;
        document.getElementById("lambda").value = 1.0;
        document.getElementById("T1").value = 0.8;
        document.getElementById("mass").value = 2000;
        document.getElementById("gValue").value = 9.81;
        clearResults();
      });

      function clearResults() {
        [
          "res-ag",
          "res-Sag",
          "res-TB",
          "res-TC",
          "res-TD",
          "res-eta",
          "res-q",
          "res-T1",
          "res-SdT1",
          "res-Fb",
          "res-Fb-min",
        ].forEach((id) => (document.getElementById(id).textContent = "–"));
        document.getElementById("spectrum-sample-body").innerHTML = "";
        document.getElementById("spectrum-full-body").innerHTML = "";
        const canvas = document.getElementById("spectrum-chart");
        const ctx = canvas.getContext("2d");
        ctx.clearRect(0, 0, canvas.width, canvas.height);
      }

      // Spectrum calculation
      function computeSe(T, ag, S, TB, TC, TD, eta) {
        if (T <= 0) return ag * S * (1 + (0 / TB) * (2.5 * eta - 1));
        if (T <= TB) {
          return ag * S * (1 + (T / TB) * (2.5 * eta - 1));
        } else if (T <= TC) {
          return ag * S * 2.5 * eta;
        } else if (T <= TD) {
          return ag * S * 2.5 * eta * (TC / T);
        } else {
          return ag * S * 2.5 * eta * ((TC * TD) / (T * T));
        }
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const agR = parseFloat(document.getElementById("agR").value);
        const gammaI = parseFloat(document.getElementById("gammaI").value);
        const S = parseFloat(document.getElementById("S").value);
        const TB = parseFloat(document.getElementById("TB").value);
        const TC = parseFloat(document.getElementById("TC").value);
        const TD = parseFloat(document.getElementById("TD").value);
        const eta = parseFloat(document.getElementById("eta").value);
        const q = parseFloat(document.getElementById("q").value);
        const lambda = parseFloat(document.getElementById("lambda").value);
        const T1 = parseFloat(document.getElementById("T1").value);
        const massTon = parseFloat(document.getElementById("mass").value);
        const gVal = parseFloat(document.getElementById("gValue").value);

        if (
          [agR, gammaI, S, TB, TC, TD, eta, q, lambda, T1, massTon, gVal].some(
            (v) => isNaN(v) || v <= 0
          )
        ) {
          alert(
            "Please enter valid positive numeric values for all required fields."
          );
          return;
        }

        const ag = gammaI * agR; // design ground acceleration [g]
        const m = massTon * 1000; // convert tonnes to kg

        // Fill key results
        document.getElementById("res-ag").textContent = ag.toFixed(3);
        document.getElementById("res-Sag").textContent = (ag * S).toFixed(3);
        document.getElementById("res-TB").textContent = TB.toFixed(2);
        document.getElementById("res-TC").textContent = TC.toFixed(2);
        document.getElementById("res-TD").textContent = TD.toFixed(2);
        document.getElementById("res-eta").textContent = eta.toFixed(2);
        document.getElementById("res-q").textContent = q.toFixed(2);
        document.getElementById("res-T1").textContent = T1.toFixed(2);

        // Compute Sd(T1) [g]
        const SeT1 = computeSe(T1, ag, S, TB, TC, TD, eta);
        const SdT1 = SeT1 / q;
        document.getElementById("res-SdT1").textContent = SdT1.toFixed(3);

        // Base shear Fb = Sd(T1) * m * g [N] -> kN
        const FbN = SdT1 * gVal * m;
        const Fb = FbN / 1000.0;
        document.getElementById("res-Fb").textContent = Fb.toFixed(1);

        // Minimum base shear using 0.8*Sd(Tc)
        const SeTc = computeSe(TC, ag, S, TB, TC, TD, eta);
        const SdTc = SeTc / q;
        const FbMinN = 0.8 * SdTc * gVal * m;
        const FbMin = FbMinN / 1000.0;
        document.getElementById("res-Fb-min").textContent = FbMin.toFixed(1);

        // Build spectrum arrays
        const samplePeriods = [0.0, TB, TC, TD, T1, 2 * T1, 4.0]
          .filter((v, i, a) => a.indexOf(v) === i)
          .sort((a, b) => a - b);
        const sampleBody = document.getElementById("spectrum-sample-body");
        sampleBody.innerHTML = "";
        samplePeriods.forEach((T) => {
          const Se = computeSe(T, ag, S, TB, TC, TD, eta);
          const Sd = Se / q;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-left">${T.toFixed(2)}</td>
        <td class="px-2 py-1 text-right">${Se.toFixed(3)}</td>
        <td class="px-2 py-1 text-right">${Sd.toFixed(3)}</td>
      `;
          sampleBody.appendChild(tr);
        });

        const fullBody = document.getElementById("spectrum-full-body");
        fullBody.innerHTML = "";
        const Tstep = 0.05;
        for (let T = 0.0; T <= 4.0001; T += Tstep) {
          const Se = computeSe(T, ag, S, TB, TC, TD, eta);
          const Sd = Se / q;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-left">${T.toFixed(2)}</td>
        <td class="px-2 py-1 text-right">${Se.toFixed(3)}</td>
        <td class="px-2 py-1 text-right">${Sd.toFixed(3)}</td>
      `;
          fullBody.appendChild(tr);
        }

        drawSpectrumChart(ag, S, TB, TC, TD, eta, q);
        // Switch to results tab
        document.querySelector('[data-tab="spectrum-tab"]').click();
      });

      // Simple canvas plot (no external libs)
      function drawSpectrumChart(ag, S, TB, TC, TD, eta, q) {
        const canvas = document.getElementById("spectrum-chart");
        const ctx = canvas.getContext("2d");
        const width = (canvas.width = canvas.clientWidth || 600);
        const height = (canvas.height = 300);

        // Build data
        const Tmax = 4.0;
        const n = 80;
        const Ts = [];
        const SeArr = [];
        const SdArr = [];
        let SeMax = 0;
        for (let i = 0; i <= n; i++) {
          const T = (Tmax * i) / n;
          const Se = computeSe(T, ag, S, TB, TC, TD, eta);
          const Sd = Se / q;
          Ts.push(T);
          SeArr.push(Se);
          SdArr.push(Sd);
          if (Se > SeMax) SeMax = Se;
        }
        if (SeMax <= 0) return;

        // Margins
        const margin = { left: 45, right: 10, top: 10, bottom: 30 };
        const plotW = width - margin.left - margin.right;
        const plotH = height - margin.top - margin.bottom;

        // Clear
        ctx.clearRect(0, 0, width, height);
        ctx.fillStyle = "#ffffff";
        ctx.fillRect(0, 0, width, height);

        // Axes
        ctx.strokeStyle = "#e5e7eb";
        ctx.lineWidth = 1;
        ctx.beginPath();
        // horizontal grid lines
        const yTicks = 4;
        for (let i = 0; i <= yTicks; i++) {
          const y = margin.top + (plotH * i) / yTicks;
          ctx.moveTo(margin.left, y);
          ctx.lineTo(width - margin.right, y);
        }
        ctx.stroke();

        // Axes lines
        ctx.strokeStyle = "#9ca3af";
        ctx.beginPath();
        ctx.moveTo(margin.left, margin.top);
        ctx.lineTo(margin.left, height - margin.bottom);
        ctx.moveTo(margin.left, height - margin.bottom);
        ctx.lineTo(width - margin.right, height - margin.bottom);
        ctx.stroke();

        // Labels
        ctx.fillStyle = "#374151";
        ctx.font = "11px Inter, system-ui, sans-serif";
        ctx.textAlign = "center";
        ctx.fillText("Period T [s]", margin.left + plotW / 2, height - 8);
        ctx.save();
        ctx.translate(12, margin.top + plotH / 2);
        ctx.rotate(-Math.PI / 2);
        ctx.fillText("Spectral acceleration [g]", 0, 0);
        ctx.restore();

        // Tick labels
        ctx.fillStyle = "#6b7280";
        ctx.textAlign = "center";
        const xTicks = 4;
        for (let i = 0; i <= xTicks; i++) {
          const T = (Tmax * i) / xTicks;
          const x = margin.left + (plotW * i) / xTicks;
          ctx.fillText(T.toFixed(1), x, height - margin.bottom + 14);
        }
        ctx.textAlign = "right";
        for (let i = 0; i <= yTicks; i++) {
          const SeVal = (SeMax * (yTicks - i)) / yTicks;
          const y = margin.top + (plotH * i) / yTicks;
          ctx.fillText(SeVal.toFixed(2), margin.left - 4, y + 3);
        }

        // Helper to map T, S to canvas
        const xScale = (T) => margin.left + (T / Tmax) * plotW;
        const yScale = (Sval) => margin.top + (1 - Sval / SeMax) * plotH;

        // Draw Se
        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 2;
        ctx.beginPath();
        Ts.forEach((T, i) => {
          const x = xScale(T);
          const y = yScale(SeArr[i]);
          if (i === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        });
        ctx.stroke();

        // Draw Sd
        ctx.strokeStyle = "#10b981";
        ctx.lineWidth = 2;
        ctx.beginPath();
        Ts.forEach((T, i) => {
          const x = xScale(T);
          const y = yScale(SdArr[i]);
          if (i === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        });
        ctx.stroke();

        // Legend
        ctx.fillStyle = "#111827";
        ctx.font = "11px Inter, system-ui, sans-serif";
        ctx.fillText("S_e(T)", margin.left + 60, margin.top + 14);
        ctx.fillText("S_d(T)", margin.left + 140, margin.top + 14);
        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 3;
        ctx.beginPath();
        ctx.moveTo(margin.left + 20, margin.top + 10);
        ctx.lineTo(margin.left + 50, margin.top + 10);
        ctx.stroke();
        ctx.strokeStyle = "#10b981";
        ctx.beginPath();
        ctx.moveTo(margin.left + 100, margin.top + 10);
        ctx.lineTo(margin.left + 130, margin.top + 10);
        ctx.stroke();
      }

      // Copy table
      document
        .getElementById("copy-table-btn")
        .addEventListener("click", () => {
          const rows = Array.from(
            document.querySelectorAll("#spectrum-full-body tr")
          );
          if (!rows.length) {
            alert("Please run the calculation first.");
            return;
          }
          let text = "T [s]\tSe(T) [g]\tSd(T) [g]\n";
          rows.forEach((tr) => {
            const cells = tr.querySelectorAll("td");
            const T = cells[0].textContent.trim();
            const Se = cells[1].textContent.trim();
            const Sd = cells[2].textContent.trim();
            text += `${T}\t${Se}\t${Sd}\n`;
          });
          navigator.clipboard
            .writeText(text)
            .then(() => {
              const status = document.getElementById("copy-status");
              status.classList.remove("hidden");
              setTimeout(() => status.classList.add("hidden"), 1500);
            })
            .catch(() => {
              alert("Copy failed. Please select and copy the table manually.");
            });
        });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", (!expanded).toString());
        });
    </script>

