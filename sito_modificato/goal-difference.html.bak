    <script>
      // Utility: clamp and parse integer
      function parseIntSafe(value, fallback = 0) {
        const n = parseInt(value, 10);
        return isNaN(n) ? fallback : n;
      }

      const numTeamsInput = document.getElementById("num-teams");
      const numMatchesInput = document.getElementById("num-matches");
      const buildTableBtn = document.getElementById("build-table");
      const matchesContainer = document.getElementById("matches-container");
      const matchesBody = document.getElementById("matches-body");
      const calculateBtn = document.getElementById("calculate-standings");
      const clearBtn = document.getElementById("clear-inputs");
      const standingsContainer = document.getElementById("standings-container");
      const standingsBody = document.getElementById("standings-body");
      const calcMessage = document.getElementById("calc-message");

      const pointsWinInput = document.getElementById("points-win");
      const pointsDrawInput = document.getElementById("points-draw");
      const pointsLossInput = document.getElementById("points-loss");

      const quickGfInput = document.getElementById("quick-gf");
      const quickGaInput = document.getElementById("quick-ga");
      const quickGdOutput = document.getElementById("quick-gd");
      const quickCalcBtn = document.getElementById("quick-calc");

      function buildTable() {
        const numTeams = Math.min(
          Math.max(parseIntSafe(numTeamsInput.value, 4), 2),
          20
        );
        const numMatches = Math.min(
          Math.max(parseIntSafe(numMatchesInput.value, 5), 1),
          38
        );
        numTeamsInput.value = numTeams;
        numMatchesInput.value = numMatches;

        matchesBody.innerHTML = "";

        for (let t = 0; t < numTeams; t++) {
          const teamName = `Team ${t + 1}`;
          for (let m = 0; m < numMatches; m++) {
            const tr = document.createElement("tr");
            tr.className = t % 2 === 0 ? "bg-white" : "bg-gray-50";

            // Team name (editable)
            const tdTeam = document.createElement("td");
            tdTeam.className = "px-2 py-1 border-t align-middle";
            if (m === 0) {
              const input = document.createElement("input");
              input.type = "text";
              input.value = teamName;
              input.className =
                "w-28 md:w-32 border rounded-md px-2 py-1 text-xs md:text-sm";
              input.dataset.teamIndex = t;
              tdTeam.rowSpan = numMatches;
              tdTeam.appendChild(input);
            }
            if (m === 0) {
              tr.appendChild(tdTeam);
            }

            // Match number
            const tdMatch = document.createElement("td");
            tdMatch.className = "px-2 py-1 border-t text-center";
            tdMatch.textContent = m + 1;
            tr.appendChild(tdMatch);

            // Goals For
            const tdGf = document.createElement("td");
            tdGf.className = "px-2 py-1 border-t text-center";
            const inputGf = document.createElement("input");
            inputGf.type = "number";
            inputGf.min = "0";
            inputGf.step = "1";
            inputGf.value = "";
            inputGf.className =
              "w-16 border rounded-md px-1 py-1 text-xs md:text-sm table-input";
            inputGf.dataset.teamIndex = t;
            inputGf.dataset.matchIndex = m;
            inputGf.dataset.type = "gf";
            tdGf.appendChild(inputGf);
            tr.appendChild(tdGf);

            // Goals Against
            const tdGa = document.createElement("td");
            tdGa.className = "px-2 py-1 border-t text-center";
            const inputGa = document.createElement("input");
            inputGa.type = "number";
            inputGa.min = "0";
            inputGa.step = "1";
            inputGa.value = "";
            inputGa.className =
              "w-16 border rounded-md px-1 py-1 text-xs md:text-sm table-input";
            inputGa.dataset.teamIndex = t;
            inputGa.dataset.matchIndex = m;
            inputGa.dataset.type = "ga";
            tdGa.appendChild(inputGa);
            tr.appendChild(tdGa);

            matchesBody.appendChild(tr);
          }
        }

        matchesContainer.classList.remove("hidden");
        standingsContainer.classList.add("hidden");
        calcMessage.textContent =
          "Enter goals for and against, then click “Calculate Goal Difference & Standings”.";
      }

      function clearInputs() {
        matchesBody.querySelectorAll('input[type="number"]').forEach((inp) => {
          inp.value = "";
        });
        standingsContainer.classList.add("hidden");
        calcMessage.textContent = "All scores cleared.";
      }

      function calculateStandings() {
        const numTeams = parseIntSafe(numTeamsInput.value, 4);
        const numMatches = parseIntSafe(numMatchesInput.value, 5);
        const pw = parseIntSafe(pointsWinInput.value, 3);
        const pd = parseIntSafe(pointsDrawInput.value, 1);
        const pl = parseIntSafe(pointsLossInput.value, 0);

        const teamNameInputs = matchesBody.querySelectorAll(
          'input[type="text"][data-team-index]'
        );
        if (!teamNameInputs.length) {
          calcMessage.textContent = "Please build the table first.";
          return;
        }

        const teams = [];
        for (let t = 0; t < numTeams; t++) {
          const nameInput = Array.from(teamNameInputs).find(
            (inp) => parseIntSafe(inp.dataset.teamIndex) === t
          );
          const name = nameInput
            ? nameInput.value.trim() || `Team ${t + 1}`
            : `Team ${t + 1}`;
          teams.push({
            index: t,
            name,
            played: 0,
            wins: 0,
            draws: 0,
            losses: 0,
            gf: 0,
            ga: 0,
            gd: 0,
            points: 0,
          });
        }

        const scoreInputs = matchesBody.querySelectorAll(
          'input[type="number"][data-team-index]'
        );
        scoreInputs.forEach((inp) => {
          const teamIndex = parseIntSafe(inp.dataset.teamIndex);
          const matchIndex = parseIntSafe(inp.dataset.matchIndex);
          const type = inp.dataset.type;
          const val =
            inp.value === "" ? null : Math.max(0, parseIntSafe(inp.value, 0));

          if (val === null) return;
          const team = teams[teamIndex];

          // Ensure played count increments once per match if any score is entered
          if (!team._matches) team._matches = {};
          if (!team._matches[matchIndex]) {
            team._matches[matchIndex] = { gf: null, ga: null };
          }
          team._matches[matchIndex][type] = val;
        });

        // Compute stats
        teams.forEach((team) => {
          if (!team._matches) return;
          Object.values(team._matches).forEach((match) => {
            if (match.gf == null || match.ga == null) return;
            const gf = match.gf;
            const ga = match.ga;
            team.played += 1;
            team.gf += gf;
            team.ga += ga;
            if (gf > ga) {
              team.wins += 1;
              team.points += pw;
            } else if (gf === ga) {
              team.draws += 1;
              team.points += pd;
            } else {
              team.losses += 1;
              team.points += pl;
            }
          });
          team.gd = team.gf - team.ga;
        });

        // Sort: points desc, gd desc, gf desc, name asc
        teams.sort((a, b) => {
          if (b.points !== a.points) return b.points - a.points;
          if (b.gd !== a.gd) return b.gd - a.gd;
          if (b.gf !== a.gf) return b.gf - a.gf;
          return a.name.localeCompare(b.name);
        });

        standingsBody.innerHTML = "";
        teams.forEach((team, idx) => {
          const tr = document.createElement("tr");
          tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";

          const posTd = document.createElement("td");
          posTd.className = "px-2 py-1 border-t text-center";
          posTd.textContent = idx + 1;
          tr.appendChild(posTd);

          const nameTd = document.createElement("td");
          nameTd.className = "px-2 py-1 border-t";
          nameTd.textContent = team.name;
          tr.appendChild(nameTd);

          const pTd = document.createElement("td");
          pTd.className = "px-2 py-1 border-t text-center";
          pTd.textContent = team.played;
          tr.appendChild(pTd);

          const wTd = document.createElement("td");
          wTd.className = "px-2 py-1 border-t text-center";
          wTd.textContent = team.wins;
          tr.appendChild(wTd);

          const dTd = document.createElement("td");
          dTd.className = "px-2 py-1 border-t text-center";
          dTd.textContent = team.draws;
          tr.appendChild(dTd);

          const lTd = document.createElement("td");
          lTd.className = "px-2 py-1 border-t text-center";
          lTd.textContent = team.losses;
          tr.appendChild(lTd);

          const gfTd = document.createElement("td");
          gfTd.className = "px-2 py-1 border-t text-center";
          gfTd.textContent = team.gf;
          tr.appendChild(gfTd);

          const gaTd = document.createElement("td");
          gaTd.className = "px-2 py-1 border-t text-center";
          gaTd.textContent = team.ga;
          tr.appendChild(gaTd);

          const gdTd = document.createElement("td");
          gdTd.className = "px-2 py-1 border-t text-center font-mono";
          const gdVal = team.gd;
          gdTd.textContent = gdVal > 0 ? `+${gdVal}` : gdVal.toString();
          tr.appendChild(gdTd);

          const ptsTd = document.createElement("td");
          ptsTd.className = "px-2 py-1 border-t text-center font-semibold";
          ptsTd.textContent = team.points;
          tr.appendChild(ptsTd);

          standingsBody.appendChild(tr);
        });

        standingsContainer.classList.remove("hidden");
        calcMessage.textContent =
          "Standings calculated. Teams are ordered by points, then goal difference, then goals scored.";
      }

      function quickCalcGD() {
        const gf = Math.max(0, parseIntSafe(quickGfInput.value, 0));
        const ga = Math.max(0, parseIntSafe(quickGaInput.value, 0));
        const gd = gf - ga;
        quickGdOutput.textContent = gd > 0 ? `+${gd}` : gd.toString();
      }

      buildTableBtn.addEventListener("click", buildTable);
      clearBtn.addEventListener("click", clearInputs);
      calculateBtn.addEventListener("click", calculateStandings);
      quickCalcBtn.addEventListener("click", quickCalcGD);

      // Initialize default table
      document.addEventListener("DOMContentLoaded", () => {
        buildTable();
        quickCalcGD();
      });

      // Mobile menu script (from template)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const expanded = this.getAttribute("aria-expanded") === "true";
          this.setAttribute("aria-expanded", String(!expanded));
          menu.classList.toggle("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
