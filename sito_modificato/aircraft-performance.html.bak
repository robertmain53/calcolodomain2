    <script>
      // Utility: clamp
      function clamp(val, min, max) {
        return Math.min(Math.max(val, min), max);
      }

      // Density altitude calculation
      function computeDensityAltitude() {
        const elev =
          parseFloat(document.getElementById("fieldElevation").value) || 0;
        const oat = parseFloat(document.getElementById("oat").value) || 0;
        const qnh = parseFloat(document.getElementById("qnh").value) || 29.92;

        const pa = elev + (29.92 - qnh) * 1000; // pressure altitude
        const isaTemp = 15 - 2 * (elev / 1000); // simple lapse rate
        const da = pa + 120 * (oat - isaTemp);

        const daRounded = Math.round(da / 10) * 10;
        document.getElementById("densityAltitudeDisplay").textContent =
          "Density altitude: " + daRounded.toLocaleString("en-US") + " ft";

        return da;
      }

      // Shared factors
      function getCommonFactors() {
        const Wref =
          parseFloat(document.getElementById("refWeight").value) || 2400;
        const W =
          parseFloat(document.getElementById("currentWeight").value) || Wref;
        const headwind =
          parseFloat(document.getElementById("headwind").value) || 0;
        const slope = parseFloat(document.getElementById("slope").value) || 0;
        const surfaceFactor =
          parseFloat(document.getElementById("surface").value) || 1;

        const da = computeDensityAltitude();
        const weightRatio = W / Wref;

        // Distance factor from weight and DA
        const fWeightDist = weightRatio * weightRatio;
        const fDADist = 1 + 0.1 * (da / 1000); // +10% per 1000 ft DA
        const fDistBase = fWeightDist * fDADist;

        // Wind factor: -10% per 10 kt headwind, +10% per 2 kt tailwind (approx)
        let fWind = 1;
        if (headwind > 0) {
          fWind = 1 - 0.1 * (headwind / 10);
        } else if (headwind < 0) {
          fWind = 1 + 0.1 * (Math.abs(headwind) / 2);
        }
        fWind = Math.max(0.5, fWind); // don't go below 50%

        // Slope factor: +10% per 1% uphill, -10% per 1% downhill
        const fSlope = 1 + 0.1 * (slope / 1);

        return {
          da,
          weightRatio,
          fDistBase,
          fWind,
          fSlope,
          surfaceFactor,
        };
      }

      // Takeoff calculation
      function calcTakeoff() {
        const refGround =
          parseFloat(document.getElementById("refTOground").value) || 900;
        const ref50 =
          parseFloat(document.getElementById("refTO50").value) || 1600;

        const { fDistBase, fWind, fSlope, surfaceFactor } = getCommonFactors();
        const totalFactor = fDistBase * fWind * fSlope * surfaceFactor;

        const groundRoll = refGround * totalFactor;
        const dist50 = ref50 * totalFactor;

        document.getElementById("toGroundRoll").textContent =
          Math.round(groundRoll).toLocaleString("en-US");
        document.getElementById("to50ft").textContent =
          Math.round(dist50).toLocaleString("en-US");
        document.getElementById("takeoffResults").classList.remove("hidden");
      }

      // Climb calculation
      function calcClimb() {
        const refROC =
          parseFloat(document.getElementById("refROC").value) || 800;
        const climbAlt =
          parseFloat(document.getElementById("climbAltitude").value) || 0;

        const { da, weightRatio } = getCommonFactors();

        // Approximate DA at climb altitude by replacing field elevation with climb altitude
        const oat = parseFloat(document.getElementById("oat").value) || 0;
        const qnh = parseFloat(document.getElementById("qnh").value) || 29.92;
        const paClimb = climbAlt + (29.92 - qnh) * 1000;
        const isaTempClimb = 15 - 2 * (climbAlt / 1000);
        const daClimb = paClimb + 120 * (oat - isaTempClimb);

        let fDAroc = 1 - 0.1 * (daClimb / 1000); // -10% per 1000 ft DA
        fDAroc = clamp(fDAroc, 0, 1);

        const fWeightROC = 1 / weightRatio;
        const roc = refROC * fDAroc * fWeightROC;

        const timePer1000 = roc > 0 ? 1000 / roc : Infinity;

        document.getElementById("rocResult").textContent =
          Math.round(roc).toLocaleString("en-US");
        document.getElementById("timePer1000").textContent =
          roc > 0 ? timePer1000.toFixed(2) : "N/A";

        document.getElementById("climbResults").classList.remove("hidden");
      }

      // Cruise calculation
      function calcCruise() {
        const refTAS =
          parseFloat(document.getElementById("refTAS").value) || 120;
        const refFuelFlow =
          parseFloat(document.getElementById("refFuelFlow").value) || 9;
        const cruiseAlt =
          parseFloat(document.getElementById("cruiseAltitude").value) || 6000;
        const tripDist =
          parseFloat(document.getElementById("tripDistance").value) || 0;
        const headwind =
          parseFloat(document.getElementById("headwind").value) || 0;

        // Simple TAS increase with altitude relative to 6000 ft
        const altDelta = (cruiseAlt - 6000) / 1000;
        const tas = refTAS * (1 + 0.01 * altDelta); // ~1% per 1000 ft

        // Groundspeed with wind (assuming wind along track)
        const gs = Math.max(40, tas + headwind); // avoid unrealistic very low GS

        const tripTime = tripDist > 0 ? tripDist / gs : 0;
        const fuelReq = tripTime * refFuelFlow;

        document.getElementById("tasResult").textContent = tas.toFixed(1);
        document.getElementById("gsResult").textContent = gs.toFixed(1);
        document.getElementById("tripTimeResult").textContent =
          tripTime.toFixed(2);
        document.getElementById("fuelRequiredResult").textContent =
          fuelReq.toFixed(1);

        document.getElementById("cruiseResults").classList.remove("hidden");
      }

      // Landing calculation
      function calcLanding() {
        const refGround =
          parseFloat(document.getElementById("refLground").value) || 700;
        const ref50 =
          parseFloat(document.getElementById("refL50").value) || 1350;

        const { fDistBase, fWind, fSlope, surfaceFactor } = getCommonFactors();
        const totalFactor = fDistBase * fWind * fSlope * surfaceFactor;

        const groundRoll = refGround * totalFactor;
        const dist50 = ref50 * totalFactor;

        document.getElementById("lGroundRoll").textContent =
          Math.round(groundRoll).toLocaleString("en-US");
        document.getElementById("l50ft").textContent =
          Math.round(dist50).toLocaleString("en-US");
        document.getElementById("landingResults").classList.remove("hidden");
      }

      // Tabs
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".tab-btn")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document.querySelectorAll(".tab-panel").forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "tab-" + target);
          });
        });
      });
      // Activate default tab
      document
        .querySelector('.tab-btn[data-tab="takeoff"]')
        .classList.add("tab-active");

      // Event listeners
      document
        .getElementById("calcTakeoffBtn")
        .addEventListener("click", calcTakeoff);
      document
        .getElementById("calcClimbBtn")
        .addEventListener("click", calcClimb);
      document
        .getElementById("calcCruiseBtn")
        .addEventListener("click", calcCruise);
      document
        .getElementById("calcLandingBtn")
        .addEventListener("click", calcLanding);

      // Recompute density altitude when key inputs change
      ["fieldElevation", "oat", "qnh"].forEach((id) => {
        document
          .getElementById(id)
          .addEventListener("input", computeDensityAltitude);
      });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.nextElementSibling;
            const icon = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              icon.textContent = "−";
            }
          });
        });

      // Initial DA display
      computeDensityAltitude();
    </script>

