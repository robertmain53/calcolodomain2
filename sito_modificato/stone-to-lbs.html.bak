<script="">
        document.getElementById('convertButton').addEventListener('click', function() {
            const stoneInput = document.getElementById('stoneInput');
            const stoneValue = parseFloat(stoneInput.value);
            const stoneInputError = document.getElementById('stoneInputError');
            const poundsResult = document.getElementById('poundsResult');

            if (isNaN(stoneValue) || stoneValue < 0) {
                stoneInputError.textContent = 'Please enter a valid number greater than or equal to 0.';
                poundsResult.textContent = '0 lbs';
                return;
            }

            stoneInputError.textContent = '';
            const pounds = stoneValue * 14;
            poundsResult.textContent = `${pounds.toFixed(2)} lbs`;
        });
    </script>

