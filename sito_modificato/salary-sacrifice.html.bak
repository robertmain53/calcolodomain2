      // Simple UK tax & NI model for 2024/25 (England, Wales, NI)
      function calcIncomeTax(taxable) {
        const allowance = 12570;
        let ti = Math.max(0, taxable - allowance);
        let tax = 0;
        const basicBand = 37700; // 50,270 - 12,570
        if (ti <= 0) return 0;
        if (ti <= basicBand) {
          tax = 0.2 * ti;
        } else {
          tax = 0.2 * basicBand + 0.4 * (ti - basicBand);
        }
        return tax;
      }

      function calcEmployeeNI(taxable) {
        const pt = 12570;
        const uel = 50270;
        let niIncome = Math.max(0, taxable - pt);
        if (niIncome <= 0) return 0;
        let ni = 0;
        if (niIncome <= uel - pt) {
          ni = 0.08 * niIncome;
        } else {
          ni = 0.08 * (uel - pt) + 0.02 * (niIncome - (uel - pt));
        }
        return ni;
      }

      function calcEmployerNI(taxable) {
        const st = 9100;
        let base = Math.max(0, taxable - st);
        return 0.138 * base;
      }

      function formatCurrency(v) {
        const sign = v < 0 ? "-" : "";
        const abs = Math.abs(v);
        return (
          sign + "£" + abs.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",")
        );
      }

      function buildResultsTable(before, after, options) {
        const showMonthly = options.showMonthly;
        function row(label, key, formatter, highlightChange) {
          const b = before[key];
          const a = after[key];
          const diff = a - b;
          const cls = highlightChange
            ? diff > 0
              ? "result-good"
              : diff < 0
              ? "result-bad"
              : ""
            : "";
          const monthlyB = b / 12;
          const monthlyA = a / 12;
          const monthlyDiff = diff / 12;
          return `
        <tr class="border-t">
          <td class="py-2 pr-2 text-sm text-gray-700">${label}</td>
          <td class="py-2 px-2 text-sm text-right">${formatter(b)}</td>
          <td class="py-2 px-2 text-sm text-right">${formatter(a)}</td>
          <td class="py-2 pl-2 text-sm text-right ${cls}">${
            diff === 0 ? "—" : formatter(diff)
          }</td>
        </tr>
        ${
          showMonthly
            ? `
        <tr class="border-b bg-gray-50">
          <td class="py-1 pr-2 text-xs text-gray-500">${label} (per month)</td>
          <td class="py-1 px-2 text-xs text-right text-gray-600">${formatter(
            monthlyB
          )}</td>
          <td class="py-1 px-2 text-xs text-right text-gray-600">${formatter(
            monthlyA
          )}</td>
          <td class="py-1 pl-2 text-xs text-right ${cls}">${
                monthlyDiff === 0 ? "—" : formatter(monthlyDiff)
              }</td>
        </tr>`
            : ""
        }`;
        }

        const effCost = after.effectiveCostPerPension;
        const effCostText = isFinite(effCost) ? formatCurrency(effCost) : "n/a";

        return `
      <div class="overflow-x-auto">
        <table class="min-w-full text-left border border-gray-200 rounded-md overflow-hidden">
          <thead class="bg-gray-100">
            <tr>
              <th class="py-2 px-2 text-xs font-semibold text-gray-600">Item</th>
              <th class="py-2 px-2 text-xs font-semibold text-gray-600 text-right">Before sacrifice</th>
              <th class="py-2 px-2 text-xs font-semibold text-gray-600 text-right">After sacrifice</th>
              <th class="py-2 px-2 text-xs font-semibold text-gray-600 text-right">Change</th>
            </tr>
          </thead>
          <tbody>
            ${row("Contractual salary", "salary", formatCurrency, false)}
            ${row(
              "Employee pension contribution",
              "employeePension",
              formatCurrency,
              false
            )}
            ${row(
              "Employer pension contribution",
              "employerPension",
              formatCurrency,
              false
            )}
            ${row(
              "Employer NI top‑up",
              "employerNiTopup",
              formatCurrency,
              true
            )}
            ${row(
              "Total pension funding",
              "totalPension",
              formatCurrency,
              true
            )}
            ${row("Income tax", "tax", formatCurrency, true)}
            ${row("Employee NI", "employeeNi", formatCurrency, true)}
            ${row("Employer NI cost", "employerNi", formatCurrency, true)}
            ${row("Take‑home pay", "takeHome", formatCurrency, true)}
          </tbody>
        </table>
      </div>
      <div class="mt-4 text-sm">
        <p><strong>Net change in take‑home pay:</strong> <span class="${
          after.takeHome - before.takeHome < 0 ? "result-bad" : "result-good"
        }">${formatCurrency(
          after.takeHome - before.takeHome
        )}</span> per year.</p>
        <p><strong>Net change in total pension funding:</strong> <span class="${
          after.totalPension - before.totalPension > 0 ? "result-good" : ""
        }">${formatCurrency(
          after.totalPension - before.totalPension
        )}</span> per year.</p>
        <p><strong>Effective cost per £1 of extra pension:</strong> ${effCostText} of reduced take‑home for each extra £1 going into your pension.</p>
      </div>
    `;
      }

      function calculateScenario() {
        const grossSalary =
          parseFloat(document.getElementById("grossSalary").value) || 0;

        let empP =
          parseFloat(document.getElementById("employeePension").value) || 0;
        const empPType = document.getElementById("employeePensionType").value;
        let empEr =
          parseFloat(document.getElementById("employerPension").value) || 0;
        const empErType = document.getElementById("employerPensionType").value;

        let sacrifice =
          parseFloat(document.getElementById("sacrificeAmount").value) || 0;
        const sacrificeType = document.getElementById("sacrificeType").value;
        const niShare = Math.min(
          100,
          Math.max(
            0,
            parseFloat(document.getElementById("employerNiShare").value) || 0
          )
        );
        const showMonthly = document.getElementById("showMonthly").checked;

        if (grossSalary <= 0) {
          document.getElementById("resultsContainer").innerHTML =
            '<p class="text-sm text-red-600">Please enter a positive annual gross salary.</p>';
          return;
        }

        // Convert percentages to amounts
        const empPAmount =
          empPType === "percent" ? (grossSalary * empP) / 100 : empP;
        const empErAmount =
          empErType === "percent" ? (grossSalary * empEr) / 100 : empEr;
        const sacrificeAmount =
          sacrificeType === "percent"
            ? (grossSalary * sacrifice) / 100
            : sacrifice;

        if (sacrificeAmount < 0) {
          document.getElementById("resultsContainer").innerHTML =
            '<p class="text-sm text-red-600">Salary sacrifice amount cannot be negative.</p>';
          return;
        }
        if (sacrificeAmount >= grossSalary) {
          document.getElementById("resultsContainer").innerHTML =
            '<p class="text-sm text-red-600">Salary sacrifice amount must be less than your gross salary.</p>';
          return;
        }

        // Before salary sacrifice
        const salaryBefore = grossSalary;
        const taxBefore = calcIncomeTax(salaryBefore);
        const empNiBefore = calcEmployeeNI(salaryBefore);
        const employerNiBefore = calcEmployerNI(salaryBefore);
        const takeHomeBefore =
          salaryBefore - taxBefore - empNiBefore - empPAmount;
        const totalPensionBefore = empPAmount + empErAmount;

        const before = {
          salary: salaryBefore,
          employeePension: empPAmount,
          employerPension: empErAmount,
          employerNiTopup: 0,
          totalPension: totalPensionBefore,
          tax: taxBefore,
          employeeNi: empNiBefore,
          employerNi: employerNiBefore,
          takeHome: takeHomeBefore,
          effectiveCostPerPension: NaN,
        };

        // After salary sacrifice
        const salaryAfter = grossSalary - sacrificeAmount;
        const taxAfter = calcIncomeTax(salaryAfter);
        const empNiAfter = calcEmployeeNI(salaryAfter);
        const employerNiAfter = calcEmployerNI(salaryAfter);
        const employerNiSaving = employerNiBefore - employerNiAfter;
        const employerNiTopup = employerNiSaving * (niShare / 100);

        // Under salary sacrifice, employee contribution is assumed to be unchanged unless user sets it;
        // sacrificed amount and NI top-up are added as employer contributions.
        const employeePensionAfter = empPAmount;
        const employerPensionAfter =
          empErAmount + sacrificeAmount + employerNiTopup;
        const totalPensionAfter = employeePensionAfter + employerPensionAfter;
        const takeHomeAfter =
          salaryAfter - taxAfter - empNiAfter - employeePensionAfter;

        const after = {
          salary: salaryAfter,
          employeePension: employeePensionAfter,
          employerPension: employerPensionAfter,
          employerNiTopup: employerNiTopup,
          totalPension: totalPensionAfter,
          tax: taxAfter,
          employeeNi: empNiAfter,
          employerNi: employerNiAfter,
          takeHome: takeHomeAfter,
          effectiveCostPerPension: NaN,
        };

        const deltaTakeHome = after.takeHome - before.takeHome;
        const deltaPension = after.totalPension - before.totalPension;
        if (deltaPension !== 0) {
          after.effectiveCostPerPension = -deltaTakeHome / deltaPension;
        }

        const summary = `
      <div class="mb-3 text-sm">
        <p>You are sacrificing <strong>${formatCurrency(
          sacrificeAmount
        )}</strong> of salary per year. Your employer shares <strong>${niShare.toFixed(
          0
        )}%</strong> of their NI saving into your pension.</p>
      </div>
    `;

        document.getElementById("resultsContainer").innerHTML =
          summary + buildResultsTable(before, after, { showMonthly });
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateScenario);
      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("grossSalary").value = 45000;
          document.getElementById("employeePension").value = 5;
          document.getElementById("employeePensionType").value = "percent";
          document.getElementById("employerPension").value = 3;
          document.getElementById("employerPensionType").value = "percent";
          document.getElementById("sacrificeAmount").value = 5;
          document.getElementById("sacrificeType").value = "percent";
          document.getElementById("employerNiShare").value = 50;
          document.getElementById("showMonthly").checked = false;
          document.getElementById("resultsContainer").innerHTML =
            '<p class="text-gray-600 text-sm">Enter your details and click “Calculate” to see a side‑by‑side comparison of your position before and after salary sacrifice.</p>';
        });

      // Auto-calc on load with defaults
      window.addEventListener("load", calculateScenario);

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
