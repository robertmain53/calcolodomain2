      // Utility functions
      function parseNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }
      function formatMoney(v) {
        return "$" + v.toFixed(2);
      }
      function formatPercent(v) {
        return v.toFixed(2) + "%";
      }

      // Tier handling
      const tiersContainer = document.getElementById("tiers-container");
      const tiersRows = document.getElementById("tiers-rows");
      const addTierBtn = document.getElementById("add-tier-btn");
      const enableTiersCheckbox = document.getElementById("enable-tiers");

      function setTierUIEnabled(enabled) {
        if (enabled) {
          tiersContainer.classList.remove("opacity-40", "pointer-events-none");
        } else {
          tiersContainer.classList.add("opacity-40", "pointer-events-none");
        }
      }

      function addTierRow(threshold = "", rate = "") {
        const row = document.createElement("div");
        row.className = "flex items-center gap-2";
        row.innerHTML = `
      <input type="number" class="w-1/3 border border-gray-300 rounded-md px-2 py-1.5 text-xs focus:outline-none focus:ring-2 focus:ring-blue-500 tier-threshold" placeholder="e.g. 10000" min="0" step="0.01" value="${threshold}">
      <div class="flex w-1/3 rounded-md shadow-sm">
        <input type="number" class="flex-1 min-w-0 border border-gray-300 rounded-l-md px-2 py-1.5 text-xs focus:outline-none focus:ring-2 focus:ring-blue-500 tier-rate" placeholder="e.g. 5" min="0" step="0.01" value="${rate}">
        <span class="inline-flex items-center px-2 rounded-r-md border border-l-0 border-gray-300 bg-gray-50 text-gray-500 text-xs">%</span>
      </div>
      <button type="button" class="w-1/3 inline-flex items-center justify-center px-2 py-1.5 border border-gray-300 text-xs text-gray-600 rounded hover:bg-gray-100 remove-tier-btn">Remove</button>
    `;
        tiersRows.appendChild(row);
      }

      addTierBtn.addEventListener("click", () => addTierRow());

      tiersRows.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-tier-btn")) {
          const row = e.target.closest("div.flex");
          if (row) row.remove();
        }
      });

      enableTiersCheckbox.addEventListener("change", () => {
        setTierUIEnabled(enableTiersCheckbox.checked);
      });

      // Commission calculation with tiers
      function calculateTieredCommission(sales, baseRate) {
        const useTiers = enableTiersCheckbox.checked;
        const breakdown = [];
        let totalCommission = 0;

        if (!useTiers || tiersRows.children.length === 0) {
          const rateDec = baseRate / 100;
          const commission = sales * rateDec;
          breakdown.push({
            label: "All sales",
            salesInTier: sales,
            rate: baseRate,
            commission: commission,
          });
          return { totalCommission: commission, breakdown };
        }

        // Collect tiers
        const tiers = [];
        Array.from(tiersRows.children).forEach((row) => {
          const thresholdInput = row.querySelector(".tier-threshold");
          const rateInput = row.querySelector(".tier-rate");
          const threshold = parseFloat(thresholdInput.value);
          const rate = parseFloat(rateInput.value);
          if (!isNaN(threshold) && threshold > 0 && !isNaN(rate) && rate >= 0) {
            tiers.push({ threshold, rate });
          }
        });

        if (tiers.length === 0) {
          const rateDec = baseRate / 100;
          const commission = sales * rateDec;
          breakdown.push({
            label: "All sales",
            salesInTier: sales,
            rate: baseRate,
            commission: commission,
          });
          return { totalCommission: commission, breakdown };
        }

        // Sort tiers by threshold
        tiers.sort((a, b) => a.threshold - b.threshold);

        let remainingSales = sales;
        let prevThreshold = 0;
        let tierIndex = 1;

        for (const tier of tiers) {
          if (remainingSales <= 0) break;
          const tierCap = Math.min(tier.threshold, sales);
          const salesInTier = Math.max(0, tierCap - prevThreshold);
          if (salesInTier > 0) {
            const commission = salesInTier * (tier.rate / 100);
            totalCommission += commission;
            breakdown.push({
              label: `Tier ${tierIndex} (up to ${formatMoney(tier.threshold)})`,
              salesInTier,
              rate: tier.rate,
              commission,
            });
            remainingSales -= salesInTier;
            prevThreshold = tier.threshold;
            tierIndex++;
          }
        }

        // Sales above highest tier
        if (remainingSales > 0) {
          const lastRate = tiers[tiers.length - 1].rate;
          const commission = remainingSales * (lastRate / 100);
          totalCommission += commission;
          breakdown.push({
            label: `Tier ${tierIndex} (above ${formatMoney(prevThreshold)})`,
            salesInTier: remainingSales,
            rate: lastRate,
            commission,
          });
        }

        return { totalCommission, breakdown };
      }

      // Main single-plan calculation
      const calcBtn = document.getElementById("calc-btn");
      const resetBtn = document.getElementById("reset-btn");
      const resultsGrid = document.getElementById("results-grid");
      const resultsSummary = document.getElementById("results-summary");
      const resultTotalCommission = document.getElementById(
        "result-total-commission"
      );
      const resultEffectiveRate = document.getElementById(
        "result-effective-rate"
      );
      const resultNetAfterDraw = document.getElementById(
        "result-net-after-draw"
      );
      const tierBreakdownContainer = document.getElementById(
        "tier-breakdown-container"
      );
      const tierBreakdownBody = document.getElementById("tier-breakdown-body");

      calcBtn.addEventListener("click", () => {
        const sales = parseNumber("sales-amount");
        const rate = parseNumber("commission-rate");
        const flatPerDeal = parseNumber("flat-per-deal");
        const deals = parseNumber("number-of-deals");
        const draw = parseNumber("draw-amount");
        const minGuarantee = parseNumber("min-guarantee");

        if (sales < 0 || rate < 0) {
          resultsSummary.textContent =
            "Sales and commission rate must be zero or positive.";
          resultsGrid.classList.add("hidden");
          tierBreakdownContainer.classList.add("hidden");
          return;
        }

        const { totalCommission: tierCommission, breakdown } =
          calculateTieredCommission(sales, rate);
        const flatCommission = flatPerDeal * deals;
        let totalCommission = tierCommission + flatCommission;

        if (minGuarantee > 0 && totalCommission < minGuarantee) {
          totalCommission = minGuarantee;
        }

        const netAfterDraw = Math.max(0, totalCommission - draw);
        const effectiveRate = sales > 0 ? (totalCommission / sales) * 100 : 0;

        resultTotalCommission.textContent = formatMoney(totalCommission);
        resultEffectiveRate.textContent = formatPercent(effectiveRate);
        resultNetAfterDraw.textContent = formatMoney(netAfterDraw);
        resultsGrid.classList.remove("hidden");

        // Summary text
        let summary = `Based on ${formatMoney(sales)} in sales`;
        if (rate > 0) summary += ` at a base rate of ${formatPercent(rate)}`;
        if (flatPerDeal > 0 && deals > 0) {
          summary += ` plus ${formatMoney(
            flatPerDeal
          )} per deal on ${deals} deals`;
        }
        summary += `, your total commission is ${formatMoney(
          totalCommission
        )}.`;
        if (draw > 0) {
          summary += ` After subtracting a draw of ${formatMoney(
            draw
          )}, your net payout is ${formatMoney(netAfterDraw)}.`;
        }
        resultsSummary.textContent = summary;

        // Tier breakdown
        if (enableTiersCheckbox.checked && breakdown.length > 0) {
          tierBreakdownBody.innerHTML = "";
          breakdown.forEach((row, idx) => {
            const tr = document.createElement("tr");
            tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";
            tr.innerHTML = `
          <td class="px-3 py-2 border-b text-gray-700">${row.label}</td>
          <td class="px-3 py-2 border-b text-right text-gray-700">${formatMoney(
            row.salesInTier
          )}</td>
          <td class="px-3 py-2 border-b text-right text-gray-700">${formatPercent(
            row.rate
          )}</td>
          <td class="px-3 py-2 border-b text-right text-gray-700">${formatMoney(
            row.commission
          )}</td>
        `;
            tierBreakdownBody.appendChild(tr);
          });
          tierBreakdownContainer.classList.remove("hidden");
        } else {
          tierBreakdownContainer.classList.add("hidden");
        }

        // Hide compare results if visible
        document
          .getElementById("compare-results-container")
          .classList.add("hidden");
      });

      resetBtn.addEventListener("click", () => {
        [
          "sales-amount",
          "commission-rate",
          "flat-per-deal",
          "number-of-deals",
          "draw-amount",
          "min-guarantee",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        tiersRows.innerHTML = "";
        enableTiersCheckbox.checked = false;
        setTierUIEnabled(false);
        resultsSummary.textContent =
          "Enter your sales, rate, and optional tiers, then click Calculate commission to see the breakdown.";
        resultsGrid.classList.add("hidden");
        tierBreakdownContainer.classList.add("hidden");
      });

      // Reverse mode
      const reverseCalcBtn = document.getElementById("reverse-calc-btn");
      const reverseResetBtn = document.getElementById("reverse-reset-btn");

      reverseCalcBtn.addEventListener("click", () => {
        const targetCommission = parseNumber("target-commission");
        const rate = parseNumber("reverse-rate");
        const flat = parseNumber("reverse-flat");
        const deals = parseNumber("reverse-deals");

        if (targetCommission <= 0 || rate < 0) {
          resultsSummary.textContent =
            "Enter a positive target commission and a non-negative rate.";
          resultsGrid.classList.add("hidden");
          tierBreakdownContainer.classList.add("hidden");
          return;
        }

        const flatTotal = flat * deals;
        const percentCommissionNeeded = Math.max(
          0,
          targetCommission - flatTotal
        );
        const rateDec = rate / 100;
        const requiredSales =
          rateDec > 0 ? percentCommissionNeeded / rateDec : 0;

        const effectiveRate =
          requiredSales > 0 ? (targetCommission / requiredSales) * 100 : 0;

        resultTotalCommission.textContent = formatMoney(targetCommission);
        resultEffectiveRate.textContent =
          requiredSales > 0 ? formatPercent(effectiveRate) : "0.00%";
        resultNetAfterDraw.textContent = formatMoney(targetCommission);
        resultsGrid.classList.remove("hidden");
        tierBreakdownContainer.classList.add("hidden");

        let summary = `To earn ${formatMoney(
          targetCommission
        )} in commission at a rate of ${formatPercent(rate)}, `;
        if (flat > 0 && deals > 0) {
          summary += `with ${formatMoney(flat)} per deal on ${deals} deals, `;
        }
        summary +=
          requiredSales > 0
            ? `you need approximately ${formatMoney(requiredSales)} in sales.`
            : "all of your commission would come from flat per-deal payments.";
        resultsSummary.textContent = summary;

        document
          .getElementById("compare-results-container")
          .classList.add("hidden");
      });

      reverseResetBtn.addEventListener("click", () => {
        [
          "target-commission",
          "reverse-rate",
          "reverse-flat",
          "reverse-deals",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        resultsSummary.textContent =
          "Enter your target commission and rate, then click Calculate required sales.";
        resultsGrid.classList.add("hidden");
        tierBreakdownContainer.classList.add("hidden");
      });

      // Compare mode
      const compareCalcBtn = document.getElementById("compare-calc-btn");
      const compareResetBtn = document.getElementById("compare-reset-btn");
      const compareResultsContainer = document.getElementById(
        "compare-results-container"
      );
      const comparePlanACommission = document.getElementById(
        "compare-planA-commission"
      );
      const comparePlanBCommission = document.getElementById(
        "compare-planB-commission"
      );
      const comparePlanARate = document.getElementById("compare-planA-rate");
      const comparePlanBRate = document.getElementById("compare-planB-rate");
      const compareDiff = document.getElementById("compare-diff");
      const compareBetterLabel = document.getElementById(
        "compare-better-label"
      );

      compareCalcBtn.addEventListener("click", () => {
        const sales = parseNumber("compare-sales");
        const planARate = parseNumber("planA-rate");
        const planAFlat = parseNumber("planA-flat");
        const planADeals = parseNumber("planA-deals");
        const planBRate = parseNumber("planB-rate");
        const planBFlat = parseNumber("planB-flat");
        const planBDeals = parseNumber("planB-deals");

        if (sales < 0 || planARate < 0 || planBRate < 0) {
          resultsSummary.textContent =
            "Sales and commission rates must be zero or positive.";
          compareResultsContainer.classList.add("hidden");
          return;
        }

        const planACommission =
          sales * (planARate / 100) + planAFlat * planADeals;
        const planBCommission =
          sales * (planBRate / 100) + planBFlat * planBDeals;

        comparePlanACommission.textContent = formatMoney(planACommission);
        comparePlanBCommission.textContent = formatMoney(planBCommission);
        const effA = sales > 0 ? (planACommission / sales) * 100 : 0;
        const effB = sales > 0 ? (planBCommission / sales) * 100 : 0;
        comparePlanARate.textContent = formatPercent(effA);
        comparePlanBRate.textContent = formatPercent(effB);

        const diff = planACommission - planBCommission;
        compareDiff.textContent = formatMoney(Math.abs(diff));
        if (Math.abs(diff) < 0.01) {
          compareBetterLabel.textContent =
            "Both plans pay approximately the same at this sales level.";
        } else if (diff > 0) {
          compareBetterLabel.textContent =
            "Plan A pays more than Plan B at this sales level.";
        } else {
          compareBetterLabel.textContent =
            "Plan B pays more than Plan A at this sales level.";
        }

        compareResultsContainer.classList.remove("hidden");
        resultsGrid.classList.add("hidden");
        tierBreakdownContainer.classList.add("hidden");
        resultsSummary.textContent =
          "Comparison complete. Review which plan pays more at the given sales level.";
      });

      compareResetBtn.addEventListener("click", () => {
        [
          "compare-sales",
          "planA-rate",
          "planA-flat",
          "planA-deals",
          "planB-rate",
          "planB-flat",
          "planB-deals",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        compareResultsContainer.classList.add("hidden");
        resultsSummary.textContent =
          "Enter a sales amount and define two plans, then click Compare plans.";
      });

      // Mode switching
      const modeSelect = document.getElementById("mode");
      const singlePlanContainer = document.getElementById(
        "single-plan-container"
      );
      const reverseContainer = document.getElementById("reverse-container");
      const compareContainer = document.getElementById("compare-container");

      modeSelect.addEventListener("change", () => {
        const mode = modeSelect.value;
        singlePlanContainer.classList.add("hidden");
        reverseContainer.classList.add("hidden");
        compareContainer.classList.add("hidden");
        resultsGrid.classList.add("hidden");
        tierBreakdownContainer.classList.add("hidden");
        compareResultsContainer.classList.add("hidden");

        if (mode === "from-sales") {
          singlePlanContainer.classList.remove("hidden");
          resultsSummary.textContent =
            "Enter your sales, rate, and optional tiers, then click Calculate commission.";
        } else if (mode === "from-target") {
          reverseContainer.classList.remove("hidden");
          resultsSummary.textContent =
            "Enter your target commission and rate, then click Calculate required sales.";
        } else if (mode === "compare") {
          compareContainer.classList.remove("hidden");
          resultsSummary.textContent =
            "Enter a sales amount and define two plans, then click Compare plans.";
        }
      });

      // Initialize
      setTierUIEnabled(false);
    </script>

