    <script>
      // Utility: normalize angle to 0–360
      function normalizeAngle(angle) {
        let a = angle % 360;
        if (a < 0) a += 360;
        return a;
      }

      function getDeclinationSigned() {
        const val =
          parseFloat(document.getElementById("declination-value").value) || 0;
        const dir = document.getElementById("declination-direction").value;
        return dir === "E" ? val : -val;
      }

      function getGridConvergenceSigned() {
        const val =
          parseFloat(document.getElementById("grid-convergence").value) || 0;
        const dir = document.getElementById("grid-convergence-direction").value;
        return dir === "E" ? val : -val;
      }

      function setMode(mode) {
        const btnTrueMag = document.getElementById("mode-true-to-mag");
        const btnMagTrue = document.getElementById("mode-mag-to-true");
        const btnGrid = document.getElementById("mode-grid");
        const gridSection = document.getElementById("grid-section");
        const inputLabelExtra = document.getElementById(
          "input-bearing-label-extra"
        );
        const outputLabelExtra = document.getElementById(
          "output-bearing-label-extra"
        );

        btnTrueMag.classList.remove("toggle-btn-active");
        btnMagTrue.classList.remove("toggle-btn-active");
        btnGrid.classList.remove("toggle-btn-active");

        if (mode === "true-to-mag") {
          btnTrueMag.classList.add("toggle-btn-active");
          inputLabelExtra.textContent = "(true)";
          outputLabelExtra.textContent = "(magnetic)";
          gridSection.classList.add("hidden");
        } else if (mode === "mag-to-true") {
          btnMagTrue.classList.add("toggle-btn-active");
          inputLabelExtra.textContent = "(magnetic)";
          outputLabelExtra.textContent = "(true)";
          gridSection.classList.add("hidden");
        } else if (mode === "grid") {
          btnGrid.classList.add("toggle-btn-active");
          inputLabelExtra.textContent = "(true or grid)";
          outputLabelExtra.textContent = "(magnetic & grid)";
          gridSection.classList.remove("hidden");
        }
      }

      function getCurrentMode() {
        if (
          document
            .getElementById("mode-grid")
            .classList.contains("toggle-btn-active")
        )
          return "grid";
        if (
          document
            .getElementById("mode-mag-to-true")
            .classList.contains("toggle-btn-active")
        )
          return "mag-to-true";
        return "true-to-mag";
      }

      function convertBearing() {
        const mode = getCurrentMode();
        const D = getDeclinationSigned();
        const input = parseFloat(
          document.getElementById("input-bearing").value
        );
        const stepsText = document.getElementById("steps-text");
        const gridText = document.getElementById("grid-text");

        if (isNaN(input)) {
          stepsText.textContent = "Please enter a valid input bearing.";
          return;
        }

        let output,
          explanation = "";
        gridText.classList.add("hidden");
        gridText.textContent = "";

        if (mode === "true-to-mag") {
          // M = T - D
          const raw = input - D;
          output = normalizeAngle(raw);
          explanation =
            `Mode: True → Magnetic.\n` +
            `True bearing T = ${input.toFixed(1)}°.\n` +
            `Declination D = ${D >= 0 ? "+" : ""}${D.toFixed(
              2
            )}° (east positive, west negative).\n` +
            `Magnetic bearing M = T − D = ${input.toFixed(1)}° − (${D.toFixed(
              2
            )}°) = ${raw.toFixed(2)}°.\n` +
            `Normalized to 0–360° → M = ${output.toFixed(1)}°.`;
        } else if (mode === "mag-to-true") {
          // T = M + D
          const raw = input + D;
          output = normalizeAngle(raw);
          explanation =
            `Mode: Magnetic → True.\n` +
            `Magnetic bearing M = ${input.toFixed(1)}°.\n` +
            `Declination D = ${D >= 0 ? "+" : ""}${D.toFixed(
              2
            )}° (east positive, west negative).\n` +
            `True bearing T = M + D = ${input.toFixed(1)}° + (${D.toFixed(
              2
            )}°) = ${raw.toFixed(2)}°.\n` +
            `Normalized to 0–360° → T = ${output.toFixed(1)}°.`;
        } else {
          // Grid mode: show true, magnetic, and grid if possible
          const C = getGridConvergenceSigned();
          const T = input; // treat input as true bearing
          const Mraw = T - D;
          const Graw = T + C;
          const M = normalizeAngle(Mraw);
          const G = normalizeAngle(Graw);
          output = M; // main output is magnetic

          explanation =
            `Mode: Grid options (starting from true bearing).\n` +
            `True bearing T = ${T.toFixed(1)}°.\n` +
            `Declination D = ${D >= 0 ? "+" : ""}${D.toFixed(
              2
            )}° (east positive, west negative).\n` +
            `Grid convergence C = ${C >= 0 ? "+" : ""}${C.toFixed(
              2
            )}° (true → grid).\n\n` +
            `Magnetic bearing M = T − D = ${T.toFixed(1)}° − (${D.toFixed(
              2
            )}°) = ${Mraw.toFixed(2)}° → ${M.toFixed(1)}° (normalized).\n` +
            `Grid bearing G = T + C = ${T.toFixed(1)}° + (${C.toFixed(
              2
            )}°) = ${Graw.toFixed(2)}° → ${G.toFixed(1)}° (normalized).`;

          gridText.classList.remove("hidden");
          gridText.textContent = `Summary: True = ${T.toFixed(
            1
          )}°, Magnetic = ${M.toFixed(1)}°, Grid = ${G.toFixed(1)}°.`;
        }

        document.getElementById("output-bearing").value = output.toFixed(1);
        stepsText.textContent = explanation;
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("mode-true-to-mag")
          .addEventListener("click", () => setMode("true-to-mag"));
        document
          .getElementById("mode-mag-to-true")
          .addEventListener("click", () => setMode("mag-to-true"));
        document
          .getElementById("mode-grid")
          .addEventListener("click", () => setMode("grid"));

        document
          .getElementById("convert-btn")
          .addEventListener("click", convertBearing);

        document.getElementById("swap-btn").addEventListener("click", () => {
          const inputEl = document.getElementById("input-bearing");
          const outputEl = document.getElementById("output-bearing");
          const temp = inputEl.value;
          inputEl.value = outputEl.value;
          outputEl.value = temp;
        });

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("declination-value").value = 10;
          document.getElementById("declination-direction").value = "E";
          document.getElementById("input-bearing").value = 90;
          document.getElementById("output-bearing").value = "";
          document.getElementById("grid-convergence").value = 0;
          document.getElementById("grid-convergence-direction").value = "E";
          setMode("true-to-mag");
          document.getElementById("steps-text").textContent =
            "Enter a declination and bearing, then click “Convert bearing” to see the detailed calculation.";
          const gridText = document.getElementById("grid-text");
          gridText.classList.add("hidden");
          gridText.textContent = "";
        });

        // Allow Enter key to trigger conversion
        ["declination-value", "input-bearing", "grid-convergence"].forEach(
          (id) => {
            const el = document.getElementById(id);
            el.addEventListener("keyup", (e) => {
              if (e.key === "Enter") convertBearing();
            });
          }
        );

        // Initialize default mode and first calculation
        setMode("true-to-mag");
        convertBearing();
      });

      // Mobile menu script (simple toggle)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
