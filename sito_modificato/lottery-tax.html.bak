      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        if (abs >= 1e9) {
          return sign + "$" + (abs / 1e9).toFixed(2) + "B";
        }
        if (abs >= 1e6) {
          return sign + "$" + (abs / 1e6).toFixed(2) + "M";
        }
        return (
          sign +
          "$" +
          abs.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function initStateSelect() {
        const select = document.getElementById("stateSelect");
        STATE_RATES.forEach((s) => {
          const opt = document.createElement("option");
          opt.value = s.code;
          opt.textContent = `${s.name} (${formatPercent(s.rate)})`;
          select.appendChild(opt);
        });
        // Default to "No state tax" if present, else CA as common example
        const noneOpt = STATE_RATES.find((s) => s.code === "NONE");
        select.value = noneOpt ? "NONE" : "CA";
      }

      function getStateRate(code) {
        const found = STATE_RATES.find((s) => s.code === code);
        return found ? found.rate : 0;
      }

      // Very simplified top marginal federal rate approximation
      function estimateFederalRate(totalIncome, filingStatus) {
        // Thresholds are rough and for illustration only
        let topRate = 0.37;
        if (filingStatus === "mfj") {
          if (totalIncome < 200000) topRate = 0.24;
          else if (totalIncome < 400000) topRate = 0.32;
          else if (totalIncome < 700000) topRate = 0.35;
          else topRate = 0.37;
        } else if (filingStatus === "hoh") {
          if (totalIncome < 150000) topRate = 0.24;
          else if (totalIncome < 300000) topRate = 0.32;
          else if (totalIncome < 500000) topRate = 0.35;
          else topRate = 0.37;
        } else {
          // single
          if (totalIncome < 150000) topRate = 0.24;
          else if (totalIncome < 300000) topRate = 0.32;
          else if (totalIncome < 550000) topRate = 0.35;
          else topRate = 0.37;
        }
        return topRate;
      }

      function recalc() {
        const jackpot =
          parseFloat(document.getElementById("jackpot").value) || 0;
        const payoutOption = document.querySelector(
          "input[name='payoutOption']:checked"
        ).value;
        const lumpPercent =
          parseFloat(document.getElementById("lumpPercent").value) || 60;
        const stateCode = document.getElementById("stateSelect").value;
        const filingStatus = document.getElementById("filingStatus").value;
        const otherIncome =
          parseFloat(document.getElementById("otherIncome").value) || 0;

        const payoutFactor = payoutOption === "lump" ? lumpPercent / 100 : 1;
        const pretax = jackpot * payoutFactor;

        const stateRate = getStateRate(stateCode);

        // Mandatory federal withholding (citizen/resident)
        const fedWithholdingRate = 0.24;
        const fedWithholding = pretax * fedWithholdingRate;

        // Approximate final federal marginal rate
        const totalIncome = pretax + otherIncome;
        const approxFedRate = estimateFederalRate(totalIncome, filingStatus);
        const approxFedTax = pretax * approxFedRate;

        // For display, we show the higher of withholding and approximate final tax
        const fedTaxDisplay = Math.max(fedWithholding, approxFedTax);

        const stateTax = pretax * stateRate;
        const totalTax = fedTaxDisplay + stateTax;
        const afterTax = pretax - totalTax;
        const effRate = pretax > 0 ? totalTax / pretax : 0;

        // Update summary
        document.getElementById("sumJackpot").textContent =
          formatMoney(jackpot);
        document.getElementById("sumPayoutType").textContent =
          payoutOption === "lump"
            ? "Lump sum (cash option)"
            : "Annuity (full jackpot)";
        document.getElementById("sumPretax").textContent = formatMoney(pretax);
        document.getElementById("sumFedTax").textContent =
          formatMoney(fedTaxDisplay) +
          ` (${formatPercent(fedTaxDisplay / (pretax || 1))})`;
        document.getElementById("sumStateTax").textContent =
          formatMoney(stateTax) + ` (${formatPercent(stateRate)})`;
        document.getElementById("sumTotalTax").textContent =
          formatMoney(totalTax);
        document.getElementById("sumEffRate").textContent =
          formatPercent(effRate);
        document.getElementById("sumAfterTax").textContent =
          formatMoney(afterTax);

        // Lump vs annuity comparison (always compute both for context)
        const lumpPretax = jackpot * (lumpPercent / 100);
        const lumpTotalIncome = lumpPretax + otherIncome;
        const lumpFedRate = estimateFederalRate(lumpTotalIncome, filingStatus);
        const lumpFedTax = Math.max(
          lumpPretax * fedWithholdingRate,
          lumpPretax * lumpFedRate
        );
        const lumpStateTax = lumpPretax * stateRate;
        const lumpAfter = lumpPretax - lumpFedTax - lumpStateTax;

        const annPretax = jackpot;
        const annTotalIncome = annPretax / 30 + otherIncome; // approximate yearly income
        const annFedRate = estimateFederalRate(annTotalIncome, filingStatus);
        const annFedTax = annPretax * annFedRate; // applying same rate to total for simplicity
        const annStateTax = annPretax * stateRate;
        const annAfter = annPretax - annFedTax - annStateTax;
        const annYears = 30;
        const annAnnualAfter = annAfter / annYears;

        document.getElementById("cmpLumpAfter").textContent =
          formatMoney(lumpAfter);
        document.getElementById("cmpAnnAfter").textContent =
          formatMoney(annAfter);
        document.getElementById("cmpAnnYears").textContent =
          annYears.toString();
        document.getElementById("cmpAnnAnnual").textContent =
          formatMoney(annAnnualAfter);
      }

      document.addEventListener("DOMContentLoaded", () => {
        initStateSelect();

        const lumpPercentInput = document.getElementById("lumpPercent");
        const lumpPercentDisplay =
          document.getElementById("lumpPercentDisplay");
        lumpPercentInput.addEventListener("input", () => {
          lumpPercentDisplay.textContent = lumpPercentInput.value + "%";
        });

        document.getElementById("calcBtn").addEventListener("click", (e) => {
          e.preventDefault();
          recalc();
        });

        // Recalculate on key inputs change for responsiveness
        ["jackpot", "otherIncome"].forEach((id) => {
          document.getElementById(id).addEventListener("change", recalc);
          document.getElementById(id).addEventListener("blur", recalc);
        });
        document
          .getElementById("lumpPercent")
          .addEventListener("change", recalc);
        document
          .getElementById("stateSelect")
          .addEventListener("change", recalc);
        document
          .getElementById("filingStatus")
          .addEventListener("change", recalc);
        document.querySelectorAll("input[name='payoutOption']").forEach((r) => {
          r.addEventListener("change", () => {
            const wrapper = document.getElementById("lump-sum-percent-wrapper");
            if (r.value === "lump" && r.checked) {
              wrapper.classList.remove("opacity-50");
              wrapper.classList.remove("pointer-events-none");
            } else if (r.value === "annuity" && r.checked) {
              wrapper.classList.add("opacity-50");
              wrapper.classList.add("pointer-events-none");
            }
            recalc();
          });
        });

        // Initial defaults for demo
        document.getElementById("jackpot").value = 500000000;
        recalc();
      });

