      // Utility functions
      function inchesFromFtIn(ft, inch) {
        ft = parseFloat(ft) || 0;
        inch = parseFloat(inch) || 0;
        return ft * 12 + inch;
      }
      function ftInFromInches(totalInches) {
        const ft = Math.floor(totalInches / 12);
        const inch = totalInches - ft * 12;
        return { ft, inch };
      }
      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }
      function formatInchesAsFtIn(totalInches) {
        const sign = totalInches < 0 ? "-" : "";
        totalInches = Math.abs(totalInches);
        const { ft, inch } = ftInFromInches(totalInches);
        return sign + ft + " ft " + roundTo(inch, 2) + " in";
      }
      function setCheckStatus(el, ok, message, borderline) {
