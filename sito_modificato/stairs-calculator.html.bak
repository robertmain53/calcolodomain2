        });

        resetBtn.addEventListener("click", () => {
          document
            .querySelectorAll("input[type='number']")
            .forEach((i) => (i.value = ""));
          document.getElementById("code-profile").value = "irc";
          advancedToggle.checked = false;
          advancedOptions.classList.add("hidden");
          inputError.classList.add("hidden");
          inputError.textContent = "";
          // Clear results
          document.getElementById("result-risers").textContent = "–";
          document.getElementById("result-treads").textContent = "–";
          document.getElementById("result-rise").textContent = "–";
          document.getElementById("result-rise-mm").textContent = "";
          document.getElementById("result-run").textContent = "–";
          document.getElementById("result-run-mm").textContent = "";
          document.getElementById("result-total-run").textContent = "–";
          document.getElementById("result-stringer").textContent = "–";
          document.getElementById("result-stringer-count").textContent = "–";
          document.getElementById("result-angle").textContent = "–";
          ["check-rise", "check-run", "check-rule", "check-headroom"].forEach(
            (id) => {
              const el = document.getElementById(id);
              if (el)
                setCheckStatus(
                  el,
                  false,
                  el.textContent.split(":")[0] + ": –",
                  true
                );
            }
          );
        });

        calculateBtn.addEventListener("click", () => {
          inputError.classList.add("hidden");
          inputError.textContent = "";

          let totalRiseInches;
          let totalRunInches = null;
          let targetRiseInches;
          let targetRunInches;
          let stairWidthInches;
          let nosingInches;
          let headroomInches;

          if (currentUnit === "imperial") {
            const trFt = document.getElementById("total-rise-ft").value;
            const trIn = document.getElementById("total-rise-in").value;
            totalRiseInches = inchesFromFtIn(trFt, trIn);

            const runFt = document.getElementById("total-run-ft").value;
            const runIn = document.getElementById("total-run-in").value;
            if (runFt || runIn) {
              totalRunInches = inchesFromFtIn(runFt, runIn);
            }

            targetRiseInches = parseFloat(
              document.getElementById("target-rise-in").value
            );
            targetRunInches = parseFloat(
              document.getElementById("target-run-in").value
            );
            stairWidthInches = parseFloat(
              document.getElementById("stair-width-in").value
            );
            nosingInches = parseFloat(
              document.getElementById("nosing-in").value
            );
            headroomInches = parseFloat(
              document.getElementById("headroom-in").value
            );
          } else {
            const trMm = parseFloat(
              document.getElementById("total-rise-mm").value
            );
            if (!isNaN(trMm)) totalRiseInches = trMm / 25.4;

            const runMm = parseFloat(
              document.getElementById("total-run-mm").value
            );
            if (!isNaN(runMm)) totalRunInches = runMm / 25.4;

            const targetRiseMm = parseFloat(
              document.getElementById("target-rise-mm").value
            );
            if (!isNaN(targetRiseMm)) targetRiseInches = targetRiseMm / 25.4;

            const targetRunMm = parseFloat(
              document.getElementById("target-run-mm").value
            );
            if (!isNaN(targetRunMm)) targetRunInches = targetRunMm / 25.4;

            const widthMm = parseFloat(
              document.getElementById("stair-width-mm").value
            );
            if (!isNaN(widthMm)) stairWidthInches = widthMm / 25.4;

            const nosingMm = parseFloat(
              document.getElementById("nosing-mm").value
            );
            if (!isNaN(nosingMm)) nosingInches = nosingMm / 25.4;

            const headroomMm = parseFloat(
              document.getElementById("headroom-mm").value
            );
            if (!isNaN(headroomMm)) headroomInches = headroomMm / 25.4;
          }

          if (!totalRiseInches || totalRiseInches <= 0) {
            inputError.textContent =
              "Please enter a valid total rise (floor-to-floor height).";
            inputError.classList.remove("hidden");
            return;
          }

          // Defaults
          if (!targetRiseInches || targetRiseInches <= 0) {
            targetRiseInches = 7.25; // comfortable default
          }
          if (!targetRunInches || targetRunInches <= 0) {
            targetRunInches = 10.5; // comfortable default
          }
          if (!stairWidthInches || stairWidthInches <= 0) {
            stairWidthInches = 36; // default width
          }
          if (!nosingInches || nosingInches < 0) {
            nosingInches = 1; // typical nosing
          }
          if (!headroomInches || headroomInches <= 0) {
            headroomInches = 80; // typical minimum
          }

          // Compute risers
          let risers = Math.round(totalRiseInches / targetRiseInches);
          if (risers < 2) risers = 2;
          let actualRise = totalRiseInches / risers;

          // Compute treads and run
          let treads = risers - 1;
          let actualRun = targetRunInches;

          if (totalRunInches && totalRunInches > 0) {
            // Adjust run to fit available space
            actualRun = totalRunInches / treads;
          }

          const totalRunComputed = actualRun * treads;
          const stringerLength = Math.sqrt(
            totalRiseInches * totalRiseInches +
              totalRunComputed * totalRunComputed
          );
          const angleRad = Math.atan2(totalRiseInches, totalRunComputed);
          const angleDeg = (angleRad * 180) / Math.PI;

          // Estimate stringer count
          let stringerCount = 2;
          if (stairWidthInches > 36 && stairWidthInches <= 48)
            stringerCount = 3;
          else if (stairWidthInches > 48 && stairWidthInches <= 60)
            stringerCount = 4;
          else if (stairWidthInches > 60) stringerCount = 5;

          // Update results
          document.getElementById("result-risers").textContent = risers;
          document.getElementById("result-treads").textContent = treads;
          document.getElementById("result-rise").textContent =
            roundTo(actualRise, 2) + " in";
          document.getElementById("result-rise-mm").textContent =
            "(" + Math.round(actualRise * 25.4) + " mm)";
          document.getElementById("result-run").textContent =
            roundTo(actualRun, 2) + " in";
          document.getElementById("result-run-mm").textContent =
            "(" + Math.round(actualRun * 25.4) + " mm)";
          document.getElementById("result-total-run").textContent =
            formatInchesAsFtIn(totalRunComputed) +
            " (" +
            Math.round(totalRunComputed * 25.4) +
            " mm)";
          document.getElementById("result-stringer").textContent =
            formatInchesAsFtIn(stringerLength) +
            " (" +
            Math.round(stringerLength * 25.4) +
            " mm)";
          document.getElementById("result-stringer-count").textContent =
            stringerCount + " stringer" + (stringerCount > 1 ? "s" : "");
          document.getElementById("result-angle").textContent =
            roundTo(angleDeg, 1) + "°";

          // Comfort & code checks
          const codeProfile = document.getElementById("code-profile").value;
          const checkRiseEl = document.getElementById("check-rise");
          const checkRunEl = document.getElementById("check-run");
          const checkRuleEl = document.getElementById("check-rule");
          const checkHeadroomEl = document.getElementById("check-headroom");

          if (codeProfile === "relaxed") {
            setCheckStatus(
              checkRiseEl,
              true,
              "Riser height: " + roundTo(actualRise, 2) + " in (relaxed check)",
              true
            );
            setCheckStatus(
              checkRunEl,
              true,
              "Tread depth: " + roundTo(actualRun, 2) + " in (relaxed check)",
              true
            );
            setCheckStatus(
              checkRuleEl,
              true,
              "2 × rise + run: " +
                roundTo(2 * actualRise + actualRun, 2) +
                " in (relaxed check)",
              true
            );
            setCheckStatus(
              checkHeadroomEl,
              true,
              "Headroom: approx. " +
                roundTo(headroomInches, 1) +
                " in (user-specified)",
              true
            );
          } else {
            // IRC-like ranges
            const maxRise = 7.75;
            const minRise = 4;
            const minRun = 10;
            const comfortMin = 24;
            const comfortMax = 25;
            const minHeadroom = 80;

            const riseOk = actualRise <= maxRise && actualRise >= minRise;
            const riseBorder =
              !riseOk && actualRise <= 8.25 && actualRise >= 3.5;
            setCheckStatus(
              checkRiseEl,
              riseOk,
              "Riser height: " +
                roundTo(actualRise, 2) +
                " in (typical limit ≤ " +
                maxRise +
                " in)",
              riseBorder
            );

            const runOk = actualRun >= minRun;
            const runBorder = !runOk && actualRun >= 9;
            setCheckStatus(
              checkRunEl,
              runOk,
              "Tread depth: " +
                roundTo(actualRun, 2) +
                " in (typical minimum " +
                minRun +
                " in)",
              runBorder
            );

            const ruleVal = 2 * actualRise + actualRun;
            const ruleOk = ruleVal >= comfortMin && ruleVal <= comfortMax;
            const ruleBorder = !ruleOk && ruleVal >= 23 && ruleVal <= 26;
            setCheckStatus(
              checkRuleEl,
              ruleOk,
              "2 × rise + run: " +
                roundTo(ruleVal, 2) +
                " in (comfort ~" +
                comfortMin +
                "–" +
                comfortMax +
                " in)",
              ruleBorder
            );

            const headOk = headroomInches >= minHeadroom;
            const headBorder = !headOk && headroomInches >= 76;
            setCheckStatus(
              checkHeadroomEl,
              headOk,
              "Headroom: approx. " +
                roundTo(headroomInches, 1) +
                " in (typical minimum " +
                minHeadroom +
                " in)",
              headBorder
            );
          }
        });
      });
    </script>

