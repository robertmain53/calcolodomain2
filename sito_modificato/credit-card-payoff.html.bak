    <script>
      // Utility functions
      function fmtMoney(v) {
        if (!isFinite(v)) return "—";
        return (
          "$" +
          v.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }
      function fmtMonths(m) {
        if (!isFinite(m) || m <= 0) return "0 months";
        const years = Math.floor(m / 12);
        const months = m % 12;
        const parts = [];
        if (years > 0) parts.push(years + " year" + (years > 1 ? "s" : ""));
        if (months > 0) parts.push(months + " month" + (months > 1 ? "s" : ""));
        return parts.join(" ");
      }
      function addMonthsToDate(date, months) {
        const d = new Date(date.getTime());
        const day = d.getDate();
        d.setMonth(d.getMonth() + months);
        if (d.getDate() < day) d.setDate(0);
        return d;
      }

      // Single-card simulation
      function simulateSingleCard(opts) {
        const {
          balance,
          apr,
          minRatePct,
          minDollar,
          payment,
          goalType,
          targetMonths,
          maxMonths,
        } = opts;
        const monthlyRate = apr / 100 / 12;
        const schedule = [];
        let b = balance;
        let totalInterest = 0;
        let month = 0;
        const maxIter = maxMonths || 600; // safety cap

        // Helper to compute payment for target time
        let fixedPayment = payment;
        if (goalType === "time") {
          const n = targetMonths;
          if (monthlyRate === 0) {
            fixedPayment = balance / n;
          } else {
            fixedPayment =
              (balance * monthlyRate) / (1 - Math.pow(1 + monthlyRate, -n));
          }
        }

        while (b > 0.01 && month < maxIter) {
          month++;
          const interest = b * monthlyRate;
          let minPayment = Math.max(b * (minRatePct / 100), minDollar);
          if (minPayment > b + interest) minPayment = b + interest;

          let pay = fixedPayment;
          if (goalType === "payment") {
            if (pay < minPayment) pay = minPayment;
          }
          if (pay > b + interest) pay = b + interest;

          const principal = pay - interest;
          b = b + interest - pay;
          if (b < 0) b = 0;

          totalInterest += interest;
          schedule.push({
            month,
            payment: pay,
            interest,
            principal,
            balance: b,
          });

          if (month >= 1200) break; // absolute safety
        }

        return {
          months: month,
          totalInterest,
          totalPaid: balance + totalInterest,
          schedule,
        };
      }

      // Minimum payments only scenario
      function simulateMinPayments(balance, apr, minRatePct, minDollar) {
        const monthlyRate = apr / 100 / 12;
        let b = balance;
        let totalInterest = 0;
        let month = 0;
        const maxIter = 1200;
        while (b > 0.01 && month < maxIter) {
          month++;
          const interest = b * monthlyRate;
          let minPayment = Math.max(b * (minRatePct / 100), minDollar);
          if (minPayment > b + interest) minPayment = b + interest;
          b = b + interest - minPayment;
          totalInterest += interest;
        }
        return {
          months: month,
          totalInterest,
        };
      }

      // Multi-card simulation
      function simulateMultiCards(cards, totalBudget, strategy) {
        const monthlyRate = (c) => c.apr / 100 / 12;
        const maxIter = 1200;
        let month = 0;
        let totalInterest = 0;
        const schedule = [];

        // Deep copy balances
        const state = cards.map((c) => ({ ...c, balance: c.balance }));

        function allPaid() {
          return state.every((c) => c.balance <= 0.01);
        }

        while (!allPaid() && month < maxIter) {
          month++;
          let monthInterest = 0;
          let monthPayment = 0;

          // 1) Accrue interest
          state.forEach((c) => {
            if (c.balance <= 0.01) return;
            const i = c.balance * monthlyRate(c);
            c.balance += i;
            monthInterest += i;
          });

          // 2) Pay minimums
          let remainingBudget = totalBudget;
          state.forEach((c) => {
            if (c.balance <= 0.01) return;
            const minPay = Math.min(c.minPayment, c.balance);
            const pay = Math.min(minPay, remainingBudget);
            c.balance -= pay;
            remainingBudget -= pay;
            monthPayment += pay;
          });

          // 3) Extra payments according to strategy
          function nextCardIndex() {
            const unpaid = state
              .map((c, idx) => ({ ...c, idx }))
              .filter((c) => c.balance > 0.01);
            if (unpaid.length === 0) return -1;
            if (strategy === "snowball") {
              unpaid.sort((a, b) => a.balance - b.balance);
            } else if (strategy === "avalanche") {
              unpaid.sort((a, b) => b.apr - a.apr);
            } else if (strategy === "custom") {
              unpaid.sort((a, b) => a.order - b.order);
            }
            return unpaid[0].idx;
          }

          while (remainingBudget > 0.01 && !allPaid()) {
            const idx = nextCardIndex();
            if (idx === -1) break;
            const c = state[idx];
            const pay = Math.min(c.balance, remainingBudget);
            c.balance -= pay;
            remainingBudget -= pay;
            monthPayment += pay;
          }

          totalInterest += monthInterest;
          const totalBalance = state.reduce(
            (sum, c) => sum + Math.max(c.balance, 0),
            0
          );
          schedule.push({
            month,
            payment: monthPayment,
            interest: monthInterest,
            principal: monthPayment - monthInterest,
            balance: totalBalance,
          });

          if (month >= 1200) break;
        }

        const totalBalanceStart = cards.reduce((s, c) => s + c.balance, 0);
        return {
          months: month,
          totalInterest,
          totalPaid: totalBalanceStart + totalInterest,
          schedule,
        };
      }

