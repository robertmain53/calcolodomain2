        );

        let currentMode = "single";

        function setMode(mode) {
          currentMode = mode;
          if (mode === "single") {
            modeSingleBtn.classList.add("bg-blue-600", "text-white");
            modeSingleBtn.classList.remove("bg-white", "text-gray-700");
            modeMultiBtn.classList.remove("bg-blue-600", "text-white");
            modeMultiBtn.classList.add("bg-white", "text-gray-700");
            singleSection.classList.remove("hidden");
            multiSection.classList.add("hidden");
          } else {
            modeMultiBtn.classList.add("bg-blue-600", "text-white");
            modeMultiBtn.classList.remove("bg-white", "text-gray-700");
            modeSingleBtn.classList.remove("bg-blue-600", "text-white");
            modeSingleBtn.classList.add("bg-white", "text-gray-700");
            singleSection.classList.add("hidden");
            multiSection.classList.remove("hidden");
          }
        }

        modeSingleBtn.addEventListener("click", () => setMode("single"));
        modeMultiBtn.addEventListener("click", () => setMode("multi"));

        goalTypeSelect.addEventListener("change", () => {
          if (goalTypeSelect.value === "payment") {
            goalPaymentRow.classList.remove("hidden");
            goalTimeRow.classList.add("hidden");
          } else {
            goalPaymentRow.classList.add("hidden");
            goalTimeRow.classList.remove("hidden");
          }
        });

        extraSlider.addEventListener("input", () => {
          const extra = Number(extraSlider.value) || 0;
          extraSliderValue.textContent = "$" + extra;
          const base = Number(monthlyPaymentInput.value) || 0;
          monthlyPaymentInput.value = Math.max(0, base + extra);
        });

        strategySelect.addEventListener("change", () => {
          const v = strategySelect.value;
          if (v === "avalanche") {
            strategyExplainer.textContent =
              "Avalanche: extra goes to the card with the highest APR first.";
          } else if (v === "snowball") {
            strategyExplainer.textContent =
              "Snowball: extra goes to the card with the smallest balance first.";
          } else {
            strategyExplainer.textContent =
              "Custom: use the “Order” column to choose which card gets extra payments first.";
          }
        });

        toggleScheduleBtn.addEventListener("click", () => {
          const hidden = scheduleWrapper.classList.contains("hidden");
          if (hidden) {
            scheduleWrapper.classList.remove("hidden");
            toggleScheduleBtn.textContent = "Hide schedule";
          } else {
            scheduleWrapper.classList.add("hidden");
            toggleScheduleBtn.textContent = "Show schedule";
          }
        });

        function clearResults() {
          resultTime.textContent = "—";
          resultDate.textContent = "Estimated payoff date: —";
          resultInterest.textContent = "—";
          resultInterestVsMin.textContent = "Vs. minimum payments only: —";
          resultTotalPaid.textContent = "—";
          resultMonthlyEffective.textContent = "Effective monthly payment: —";
          comparisonPanel.classList.add("hidden");
          scheduleTbody.innerHTML = "";
        }

        function renderSchedule(schedule) {
          scheduleTbody.innerHTML = "";
          const maxRows = 360;
          schedule.slice(0, maxRows).forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="px-3 py-1 text-left">${row.month}</td>
          <td class="px-3 py-1 text-right">${fmtMoney(row.payment)}</td>
          <td class="px-3 py-1 text-right">${fmtMoney(row.interest)}</td>
          <td class="px-3 py-1 text-right">${fmtMoney(row.principal)}</td>
          <td class="px-3 py-1 text-right">${fmtMoney(row.balance)}</td>
        `;
            scheduleTbody.appendChild(tr);
          });
          if (schedule.length > maxRows) {
            const tr = document.createElement("tr");
            tr.innerHTML = `<td colspan="5" class="px-3 py-2 text-center text-gray-500">Schedule truncated to first ${maxRows} months for display.</td>`;
            scheduleTbody.appendChild(tr);
          }
        }

        function calculate() {
          inputError.classList.add("hidden");
          clearResults();

          if (currentMode === "single") {
            const balance = Number(document.getElementById("balance").value);
            const apr = Number(document.getElementById("apr").value);
            const minRatePct = Number(
              document.getElementById("min-payment-rate").value
            );
            const goalType = goalTypeSelect.value;
            const minDollar = 25;

            if (balance <= 0 || apr < 0 || apr > 99) {
              inputError.textContent =
                "Please enter a positive balance and an APR between 0% and 99%.";
              inputError.classList.remove("hidden");
              return;
            }

            let payment = Number(monthlyPaymentInput.value);
            let targetMonths = 0;
            if (goalType === "time") {
              const years =
                Number(document.getElementById("goal-years").value) || 0;
              const months =
                Number(document.getElementById("goal-months").value) || 0;
              targetMonths = years * 12 + months;
              if (targetMonths <= 0) {
                inputError.textContent =
                  "Please choose a target payoff time greater than 0.";
                inputError.classList.remove("hidden");
                return;
              }
            } else {
              if (payment <= 0) {
                inputError.textContent =
                  "Monthly payment must be greater than 0.";
                inputError.classList.remove("hidden");
                return;
              }
            }

            const result = simulateSingleCard({
              balance,
              apr,
              minRatePct,
              minDollar,
              payment,
              goalType,
              targetMonths,
              maxMonths: 1200,
            });

            if (!isFinite(result.months) || result.months <= 0) {
              inputError.textContent =
                "Unable to compute a valid payoff plan with the given inputs.";
              inputError.classList.remove("hidden");
              return;
            }

            const today = new Date();
            const payoffDate = addMonthsToDate(today, result.months);
            resultTime.textContent = fmtMonths(result.months);
            resultDate.textContent =
              "Estimated payoff date: " + payoffDate.toLocaleDateString();
            resultInterest.textContent = fmtMoney(result.totalInterest);
            resultTotalPaid.textContent = fmtMoney(result.totalPaid);
            resultMonthlyEffective.textContent =
              "Effective monthly payment: " +
              fmtMoney(result.totalPaid / result.months);

            const minScenario = simulateMinPayments(
              balance,
              apr,
              minRatePct,
              minDollar
            );
            if (isFinite(minScenario.months) && minScenario.months > 0) {
              comparisonPanel.classList.remove("hidden");
              minTime.textContent =
                "Time to payoff: " + fmtMonths(minScenario.months);
              minInterest.textContent =
                "Total interest: " + fmtMoney(minScenario.totalInterest);

              const timeSaved = minScenario.months - result.months;
              const interestSaved =
                minScenario.totalInterest - result.totalInterest;
              if (timeSaved > 0) {
                saveTime.textContent =
                  "You’ll be debt-free " + fmtMonths(timeSaved) + " sooner.";
              } else {
                saveTime.textContent =
                  "Your plan takes about the same time as minimum payments.";
              }
              if (interestSaved > 0) {
                saveInterest.textContent =
                  "You’ll save " + fmtMoney(interestSaved) + " in interest.";
                resultInterestVsMin.textContent =
                  "You save " +
                  fmtMoney(interestSaved) +
                  " vs. minimum payments only.";
              } else {
                saveInterest.textContent =
                  "You pay about the same interest as minimum payments.";
                resultInterestVsMin.textContent =
                  "No significant interest savings vs. minimum payments only.";
              }
            }

            renderSchedule(result.schedule);
          } else {
            const rows = Array.from(cardsTbody.querySelectorAll("tr"));
            if (rows.length === 0) {
              inputError.textContent = "Please add at least one credit card.";
              inputError.classList.remove("hidden");
              return;
            }
            const cards = [];
            for (const row of rows) {
              const name = row.querySelector(".card-name").value || "Card";
              const balance = Number(row.querySelector(".card-balance").value);
              const apr = Number(row.querySelector(".card-apr").value);
              const minPayment = Number(row.querySelector(".card-min").value);
              const order = Number(row.querySelector(".card-order").value) || 1;
              if (balance <= 0 || apr < 0 || apr > 99 || minPayment <= 0) {
                inputError.textContent =
                  "Please enter valid balance, APR (0–99), and minimum payment for each card.";
                inputError.classList.remove("hidden");
                return;
              }
              cards.push({ name, balance, apr, minPayment, order });
            }
            const totalBudget = Number(multiTotalPayment.value);
            if (totalBudget <= 0) {
              inputError.textContent =
                "Total monthly budget must be greater than 0.";
              inputError.classList.remove("hidden");
              return;
            }

            const strategy = strategySelect.value;
            const result = simulateMultiCards(cards, totalBudget, strategy);

            const today = new Date();
            const payoffDate = addMonthsToDate(today, result.months);
            resultTime.textContent = fmtMonths(result.months);
            resultDate.textContent =
              "Estimated payoff date: " + payoffDate.toLocaleDateString();
            resultInterest.textContent = fmtMoney(result.totalInterest);
            resultTotalPaid.textContent = fmtMoney(result.totalPaid);
            resultMonthlyEffective.textContent =
              "Effective monthly payment: " +
              fmtMoney(result.totalPaid / result.months);
            resultInterestVsMin.textContent =
              "Interest vs. minimum-only scenario is not shown for multi-card mode.";

            comparisonPanel.classList.add("hidden");
            renderSchedule(result.schedule);
          }
        }

        calculateBtn.addEventListener("click", calculate);

        resetBtn.addEventListener("click", () => {
          document.getElementById("balance").value = 5000;
          document.getElementById("apr").value = 19.99;
          document.getElementById("min-payment-rate").value = 2;
          monthlyPaymentInput.value = 250;
          extraSlider.value = 0;
          extraSliderValue.textContent = "$0";
          document.getElementById("goal-years").value = 2;
          document.getElementById("goal-months").value = 0;
          goalTypeSelect.value = "payment";
          goalPaymentRow.classList.remove("hidden");
          goalTimeRow.classList.add("hidden");
          multiTotalPayment.value = 600;
          cardsTbody.innerHTML = "";
          initDefaultCards();
          setMode("single");
          clearResults();
          inputError.classList.add("hidden");
        });

        // Multi-card table helpers
        function addCardRow(card) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2">
          <input type="text" class="card-name w-full border-gray-200 rounded-md text-xs px-2 py-1" value="${card.name}">
        </td>
        <td class="px-3 py-2 text-right">
          <input type="number" class="card-balance w-24 border-gray-200 rounded-md text-xs px-2 py-1 text-right" value="${card.balance}">
        </td>
        <td class="px-3 py-2 text-right">
          <input type="number" class="card-apr w-20 border-gray-200 rounded-md text-xs px-2 py-1 text-right" value="${card.apr}">
        </td>
        <td class="px-3 py-2 text-right">
          <input type="number" class="card-min w-24 border-gray-200 rounded-md text-xs px-2 py-1 text-right" value="${card.minPayment}">
        </td>
        <td class="px-3 py-2 text-right">
          <input type="number" class="card-order w-16 border-gray-200 rounded-md text-xs px-2 py-1 text-right" value="${card.order}">
        </td>
        <td class="px-3 py-2 text-center">
          <button type="button" class="remove-card text-xs text-red-600 hover:underline">Remove</button>
        </td>
      `;
          cardsTbody.appendChild(tr);
          tr.querySelector(".remove-card").addEventListener("click", () => {
            tr.remove();
          });
        }

        function initDefaultCards() {
          addCardRow({
            name: "Card A",
            balance: 3000,
            apr: 19.99,
            minPayment: 75,
            order: 1,
          });
          addCardRow({
            name: "Card B",
            balance: 1500,
            apr: 24.99,
            minPayment: 40,
            order: 2,
          });
        }

        addCardBtn.addEventListener("click", () => {
          const count = cardsTbody.querySelectorAll("tr").length;
          addCardRow({
            name: "Card " + String.fromCharCode(65 + count),
            balance: 1000,
            apr: 18.99,
            minPayment: 30,
            order: count + 1,
          });
        });

        // Initialize defaults
        initDefaultCards();
        clearResults();
      });
    </script>

