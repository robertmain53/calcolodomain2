    <script>
      // Helper: format currency
      function fmtCurrency(value) {
        if (isNaN(value) || !isFinite(value)) return "$0.00";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
        });
      }

      // Helper: format percent
      function fmtPercent(value) {
        if (isNaN(value) || !isFinite(value)) return "0.00%";
        return value.toFixed(2) + "%";
      }

      // Pay frequency to annual factor
      function getAnnualFactor(freq) {
        switch (freq) {
          case "annual":
            return 1;
          case "monthly":
            return 12;
          case "biweekly":
            return 26;
          case "weekly":
            return 52;
          default:
            return 1;
        }
      }

      function recalcFromDropdowns() {
        const citySelect = document.getElementById("citySelect");
        const selectedCity = citySelect.options[citySelect.selectedIndex];
        const cityRateAttr = selectedCity.getAttribute("data-rate");
        if (cityRateAttr !== null) {
          document.getElementById("cityRate").value =
            parseFloat(cityRateAttr).toFixed(2);
        }

        const sdSelect = document.getElementById("sdSelect");
        const selectedSD = sdSelect.options[sdSelect.selectedIndex];
        const sdRateAttr = selectedSD.getAttribute("data-rate");
        const sdTypeAttr = selectedSD.getAttribute("data-type");
        if (sdRateAttr !== null) {
          document.getElementById("sdRate").value =
            parseFloat(sdRateAttr).toFixed(2);
        }
        if (sdTypeAttr) {
          document.getElementById("sdType").value = sdTypeAttr;
        }
      }

      function calculateOhioLocalTax() {
        const errorEl = document.getElementById("calcError");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        const freq = document.getElementById("payFrequency").value;
        const wages = parseFloat(document.getElementById("wages").value);
        const cityRate =
          parseFloat(document.getElementById("cityRate").value) || 0;
        const sdRate = parseFloat(document.getElementById("sdRate").value) || 0;
        const sdType = document.getElementById("sdType").value;

        const creditEnabled =
          document.getElementById("cityCreditToggle").checked;
        const workCityRate =
          parseFloat(document.getElementById("workCityRate").value) || 0;
        const creditPercent =
          parseFloat(document.getElementById("creditPercent").value) || 0;

        if (isNaN(wages) || wages < 0) {
          errorEl.textContent =
            "Please enter a valid, non-negative wage amount.";
          errorEl.classList.remove("hidden");
          return;
        }

        const annualFactor = getAnnualFactor(freq);
        const annualWages = wages * annualFactor;

        // Municipal tax calculation
        let cityTaxPeriod = 0;
        if (creditEnabled) {
          const homeRate = cityRate / 100;
          const workRate = workCityRate / 100;
          const creditFraction = creditPercent / 100;
          const netRate = homeRate - workRate * creditFraction;
          const effectiveRate = Math.max(0, netRate);
          cityTaxPeriod = wages * effectiveRate;
        } else {
          cityTaxPeriod = wages * (cityRate / 100);
        }

        // School district tax (approximate)
        let sdBasePeriod = wages;
        // In reality, traditional base uses Ohio taxable income; we approximate with wages
        if (sdType === "traditional" || sdType === "earned") {
          // same base in this simplified model
          sdBasePeriod = wages;
        }
        const sdTaxPeriod = sdBasePeriod * (sdRate / 100);

        const totalLocalPeriod = cityTaxPeriod + sdTaxPeriod;

        const cityTaxAnnual = cityTaxPeriod * annualFactor;
        const sdTaxAnnual = sdTaxPeriod * annualFactor;
        const totalLocalAnnual = totalLocalPeriod * annualFactor;

        const effectiveRate =
          annualWages > 0 ? (totalLocalAnnual / annualWages) * 100 : 0;

        // Update UI
        document.getElementById("cityTaxPeriod").textContent =
          fmtCurrency(cityTaxPeriod);
        document.getElementById("sdTaxPeriod").textContent =
          fmtCurrency(sdTaxPeriod);
        document.getElementById("totalLocalPeriod").textContent =
          fmtCurrency(totalLocalPeriod);

        document.getElementById("cityTaxAnnual").textContent =
          fmtCurrency(cityTaxAnnual);
        document.getElementById("sdTaxAnnual").textContent =
          fmtCurrency(sdTaxAnnual);
        document.getElementById("totalLocalAnnual").textContent =
          fmtCurrency(totalLocalAnnual);

        document.getElementById("effectiveRate").textContent =
          fmtPercent(effectiveRate);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const citySelect = document.getElementById("citySelect");
        const sdSelect = document.getElementById("sdSelect");
        const creditToggle = document.getElementById("cityCreditToggle");
        const creditSection = document.getElementById("cityCreditSection");
        const calcBtn = document.getElementById("calcBtn");

        citySelect.addEventListener("change", function () {
          recalcFromDropdowns();
        });

        sdSelect.addEventListener("change", function () {
          recalcFromDropdowns();
        });

        creditToggle.addEventListener("change", function () {
          if (creditToggle.checked) {
            creditSection.classList.remove("hidden");
          } else {
            creditSection.classList.add("hidden");
          }
        });

        calcBtn.addEventListener("click", function (e) {
          e.preventDefault();
          calculateOhioLocalTax();
        });

        // Initial sync and calculation
        recalcFromDropdowns();
        calculateOhioLocalTax();
      });
    </script>

