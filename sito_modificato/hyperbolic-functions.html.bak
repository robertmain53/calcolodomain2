                return sh / ch;
              }

              function formatNumber(x) {
                if (!isFinite(x)) {
                  if (x === Infinity || x === -Infinity) {
                    return (x < 0 ? '-' : '') + 'Infinity';
                  }
                  return 'NaN';
                }

                const mode = formatSelect.value;
                if (mode === 'fixed4') {
                  return x.toFixed(4);
                }
                if (mode === 'fixed6') {
                  return x.toFixed(6);
                }
                if (mode === 'sci6') {
                  return x.toExponential(6);
                }
                // auto: choose reasonable significant digits
                const absx = Math.abs(x);
                if (absx === 0) return '0';
                if (absx >= 1e7 || absx < 1e-4) {
                  return x.toExponential(6);
                }
                return x.toPrecision(8);
              }

              function calculate() {
                hideError();
                resultsContainer.classList.add('hidden');
                notesEl.textContent = '';

                const raw = xInput.value.trim();
                if (!raw) {
                  showError('Please enter a real value for x.');
                  return;
                }

                const normalized = raw.replace(',', '.');
                const xParsed = Number(normalized);
                if (!isFinite(xParsed)) {
                  showError('The value of x must be a finite real number.');
                  return;
                }

                const unitMode = getUnitMode();
                let xRad = xParsed;
                let xDeg = xParsed;

                if (unitMode === 'deg') {
                  xRad = xParsed * Math.PI / 180;
                  xDeg = xParsed;
                } else {
                  xDeg = xParsed * 180 / Math.PI;
                }

                // core values
                const sh = sinh(xRad);
                const ch = cosh(xRad);
                const th = tanh(xRad);

                // identity: cosh^2 - sinh^2
                const identity = ch * ch - sh * sh;

                // reciprocals, with domain checks
                let cothVal = null;
                let sechVal = null;
                let cschVal = null;

                const EPS = 1e-15;
                if (Math.abs(sh) < EPS) {
                  cothVal = null; // undefined
                  cschVal = null;
                } else {
                  cothVal = ch / sh;
                  cschVal = 1 / sh;
                }

                if (Math.abs(ch) < EPS) {
                  sechVal = null;
                } else {
                  sechVal = 1 / ch;
                }

                // populate outputs
                xRadEl.textContent = formatNumber(xRad);
                xDegEl.textContent = formatNumber(xDeg);
                identityEl.textContent = formatNumber(identity);

                sinhEl.textContent = formatNumber(sh);
                coshEl.textContent = formatNumber(ch);
                tanhEl.textContent = formatNumber(th);

                if (cothVal === null) {
                  cothEl.textContent = 'undefined (sinh x = 0)';
                } else {
                  cothEl.textContent = formatNumber(cothVal);
                }

                if (sechVal === null) {
                  sechEl.textContent = 'undefined (cosh x = 0)';
                } else {
                  sechEl.textContent = formatNumber(sechVal);
                }

                if (cschVal === null) {
                  cschEl.textContent = 'undefined (sinh x = 0)';
                } else {
                  cschEl.textContent = formatNumber(cschVal);
                }

                // notes
                const notes = [];
                notes.push(
                  'Computed hyperbolic functions for x = ' + xParsed +
                  (unitMode === 'deg' ? ' degrees' : ' radians (raw real argument).')
                );
                notes.push(
                  'Internally, the calculator always uses x in radians via the exponential definitions. ' +
                  'Numerical deviations of cosh²x − sinh²x from exactly 1 are due to finite precision.'
                );
                if (!isFinite(ch) || !isFinite(sh)) {
                  notes.push(
                    'At this magnitude of x, exponentials may overflow to infinity. ' +
                    'Consider rescaling your problem or using an analytical expression.'
                  );
                }
                notesEl.textContent = notes.join(' ');

                resultsContainer.classList.remove('hidden');
              }

              btnCalc.addEventListener('click', calculate);

              btnExample.addEventListener('click', function () {
                hideError();
                xInput.value = '2.0';
                const radios = document.querySelectorAll('input[name="hyp-unit"]');
                radios.forEach(r => {
                  r.checked = (r.value === 'rad');
                });
                formatSelect.value = 'fixed6';
                resultsContainer.classList.add('hidden');
                notesEl.textContent = '';
              });

              btnClear.addEventListener('click', function () {
                hideError();
                xInput.value = '';
                formatSelect.value = 'auto';
                const radios = document.querySelectorAll('input[name="hyp-unit"]');
                radios.forEach(r => {
                  r.checked = (r.value === 'rad');
                });
                resultsContainer.classList.add('hidden');
                notesEl.textContent = '';
              });
            }());
          </script>

