    <script>
      // Unit toggle
      const unitsMetricBtn = document.getElementById("units-metric");
      const unitsUsBtn = document.getElementById("units-us");
      const metricInputs = document.getElementById("metric-inputs");
      const usInputs = document.getElementById("us-inputs");

      unitsMetricBtn.addEventListener("click", () => {
        unitsMetricBtn.classList.add("bg-blue-600", "text-white");
        unitsMetricBtn.classList.remove("bg-gray-100", "text-gray-700");
        unitsUsBtn.classList.add("bg-gray-100", "text-gray-700");
        unitsUsBtn.classList.remove("bg-blue-600", "text-white");
        metricInputs.classList.remove("hidden");
        usInputs.classList.add("hidden");
      });

      unitsUsBtn.addEventListener("click", () => {
        unitsUsBtn.classList.add("bg-blue-600", "text-white");
        unitsUsBtn.classList.remove("bg-gray-100", "text-gray-700");
        unitsMetricBtn.classList.add("bg-gray-100", "text-gray-700");
        unitsMetricBtn.classList.remove("bg-blue-600", "text-white");
        metricInputs.classList.add("hidden");
        usInputs.classList.remove("hidden");
      });

      // Dosing basis toggle
      const basisBsa = document.getElementById("basis-bsa");
      const basisKg = document.getElementById("basis-kg");
      const bsaDoseRow = document.getElementById("bsa-dose-row");
      const kgDoseRow = document.getElementById("kg-dose-row");

      function updateBasisVisibility() {
        bsaDoseRow.classList.toggle("hidden", !basisBsa.checked);
        kgDoseRow.classList.toggle("hidden", !basisKg.checked);
      }
      basisBsa.addEventListener("change", updateBasisVisibility);
      basisKg.addEventListener("change", updateBasisVisibility);

      // Calculator logic
      const calcError = document.getElementById("calc-error");
      const resultsSection = document.getElementById("results-section");
      const summaryAge = document.getElementById("summary-age");
      const summarySize = document.getElementById("summary-size");
      const summaryBsa = document.getElementById("summary-bsa");
      const doseSummaryList = document.getElementById("dose-summary-list");
      const safetyNote = document.getElementById("safety-note");

      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function calculateBSA(heightCm, weightKg, formula) {
        if (heightCm <= 0 || weightKg <= 0) return NaN;
        switch (formula) {
          case "dubois":
            return (
              0.007184 * Math.pow(heightCm, 0.725) * Math.pow(weightKg, 0.425)
            );
          case "haycock":
            return (
              0.024265 * Math.pow(heightCm, 0.3964) * Math.pow(weightKg, 0.5378)
            );
          case "mosteller":
          default:
            return Math.sqrt((heightCm * weightKg) / 3600);
        }
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        calcError.textContent = "";
        safetyNote.classList.add("hidden");
        resultsSection.classList.add("hidden");
        doseSummaryList.innerHTML = "";

        const usingMetric = !metricInputs.classList.contains("hidden");

        let ageVal = null;
        let heightCm, weightKg;

        if (usingMetric) {
          const age = document.getElementById("age").value;
          ageVal = age !== "" ? parseFloat(age) : null;
          heightCm = parseFloat(document.getElementById("height-cm").value);
          weightKg = parseFloat(document.getElementById("weight-kg").value);
        } else {
          const age = document.getElementById("age-us").value;
          ageVal = age !== "" ? parseFloat(age) : null;
          const ft = parseFloat(document.getElementById("height-ft").value);
          const inch = parseFloat(document.getElementById("height-in").value);
          const lb = parseFloat(document.getElementById("weight-lb").value);
          if (!isNaN(ft) || !isNaN(inch)) {
            const totalIn =
              (isNaN(ft) ? 0 : ft * 12) + (isNaN(inch) ? 0 : inch);
            heightCm = totalIn * 2.54;
          }
          if (!isNaN(lb)) {
            weightKg = lb * 0.45359237;
          }
        }

        if (!heightCm || !weightKg || heightCm <= 0 || weightKg <= 0) {
          calcError.textContent = "Please enter a valid height and weight.";
          return;
        }

        if (!basisBsa.checked && !basisKg.checked) {
          calcError.textContent =
            "Select at least one dosing basis (mg/m² or mg/kg).";
          return;
        }

        const dosePerM2 = parseFloat(
          document.getElementById("dose-per-m2").value
        );
        const dosePerKg = parseFloat(
          document.getElementById("dose-per-kg").value
        );

        if (basisBsa.checked && (!dosePerM2 || dosePerM2 <= 0)) {
          calcError.textContent = "Enter a valid ordered dose in mg/m².";
          return;
        }
        if (basisKg.checked && (!dosePerKg || dosePerKg <= 0)) {
          calcError.textContent = "Enter a valid ordered dose in mg/kg.";
          return;
        }

        const maxDoseInput = document.getElementById("max-dose").value;
        const maxDose = maxDoseInput !== "" ? parseFloat(maxDoseInput) : null;
        const concInput = document.getElementById("concentration").value;
        const concentration = concInput !== "" ? parseFloat(concInput) : null;

        const formula = document.getElementById("bsa-formula").value;
        const bsa = calculateBSA(heightCm, weightKg, formula);
        if (!bsa || !isFinite(bsa)) {
          calcError.textContent =
            "Unable to calculate BSA with the provided values.";
          return;
        }

        // Build patient summary
        if (ageVal !== null && !isNaN(ageVal)) {
          summaryAge.textContent = `Age: ${round(
            ageVal,
            1
          )} years (approximate)`;
        } else {
          summaryAge.textContent = "Age: not provided";
        }

        const heightStr = `${round(heightCm, 1)} cm`;
        const weightStr = `${round(weightKg, 2)} kg`;
        summarySize.textContent = `Size: ${heightStr}, ${weightStr}`;
        summaryBsa.textContent = `Calculated BSA: ${round(bsa, 3)} m² (${
          formula.charAt(0).toUpperCase() + formula.slice(1)
        } formula)`;

        let anyCapped = false;

        if (basisBsa.checked) {
          let doseMg = bsa * dosePerM2;
          const theoretical = doseMg;
          let note = "";
          if (maxDose && doseMg > maxDose) {
            doseMg = maxDose;
            anyCapped = true;
            note = ` (capped from ${round(theoretical, 2)} mg)`;
          }
          let li = document.createElement("li");
          let text = `BSA-based dose: ${round(
            doseMg,
            2
          )} mg${note} (using ${round(bsa, 3)} m² × ${dosePerM2} mg/m²)`;
          if (concentration && concentration > 0) {
            const vol = doseMg / concentration;
            text += ` → ${round(vol, 2)} mL at ${concentration} mg/mL`;
          }
          li.textContent = text;
          doseSummaryList.appendChild(li);
        }

        if (basisKg.checked) {
          let doseMg = weightKg * dosePerKg;
          const theoretical = doseMg;
          let note = "";
          if (maxDose && doseMg > maxDose) {
            doseMg = maxDose;
            anyCapped = true;
            note = ` (capped from ${round(theoretical, 2)} mg)`;
          }
          let li = document.createElement("li");
          let text = `Weight-based dose: ${round(
            doseMg,
            2
          )} mg${note} (using ${round(weightKg, 2)} kg × ${dosePerKg} mg/kg)`;
          if (concentration && concentration > 0) {
            const vol = doseMg / concentration;
            text += ` → ${round(vol, 2)} mL at ${concentration} mg/mL`;
          }
          li.textContent = text;
          doseSummaryList.appendChild(li);
        }

        if (anyCapped) {
          safetyNote.classList.remove("hidden");
        }

        resultsSection.classList.remove("hidden");
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document
          .querySelectorAll(
            "#metric-inputs input, #us-inputs input, #dose-per-m2, #dose-per-kg, #max-dose, #concentration"
          )
          .forEach((el) => (el.value = ""));
        basisBsa.checked = true;
        basisKg.checked = false;
        updateBasisVisibility();
        calcError.textContent = "";
        resultsSection.classList.add("hidden");
        safetyNote.classList.add("hidden");
        doseSummaryList.innerHTML = "";
      });

      // Initialize basis visibility
      updateBasisVisibility();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
