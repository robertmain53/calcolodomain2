    <script>
      // Utility functions
      function parseNumber(val) {
        if (val === null || val === undefined) return NaN;
        const n = parseFloat(String(val).replace(/,/g, ""));
        return isNaN(n) ? NaN : n;
      }

      function formatMoney(value, decimals, symbol) {
        if (!isFinite(value)) return symbol + "0.00";
        const factor = Math.pow(10, decimals);
        const rounded = Math.round(value * factor) / factor;
        return (
          symbol +
          rounded.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          })
        );
      }

      document.addEventListener("DOMContentLoaded", function () {
        const modeButtons = document.querySelectorAll(".mode-btn");
        const stateSelect = document.getElementById("state-select");
        const taxRateInput = document.getElementById("tax-rate");
        const itemsContainer = document.getElementById("items-container");
        const addItemBtn = document.getElementById("add-item-btn");
        const subtotalDisplay = document.getElementById("subtotal-display");
        const taxDisplay = document.getElementById("tax-display");
        const totalDisplay = document.getElementById("total-display");
        const extraResults = document.getElementById("extra-results");
        const netFromTotal = document.getElementById("net-from-total");
        const taxFromTotal = document.getElementById("tax-from-total");
        const rateFromTotal = document.getElementById("rate-from-total");
        const currencySelect = document.getElementById("currency-select");
        const roundingSelect = document.getElementById("rounding-select");
        const includeTaxCheckbox = document.getElementById(
          "include-tax-checkbox"
        );
        const errorMessage = document.getElementById("error-message");

        let currentMode = "add"; // 'add', 'remove', 'rate'

        function setMode(mode) {
          currentMode = mode;
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === mode) {
              btn.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              btn.classList.add(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50"
              );
            } else {
              btn.classList.remove(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50"
              );
              btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
            }
          });
          includeTaxCheckbox.checked = mode === "remove";
          recalc();
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => setMode(btn.dataset.mode));
        });

        stateSelect.addEventListener("change", () => {
          if (stateSelect.value !== "") {
            taxRateInput.value = stateSelect.value;
          }
          recalc();
        });

        taxRateInput.addEventListener("input", recalc);
        currencySelect.addEventListener("change", recalc);
        roundingSelect.addEventListener("change", recalc);
        includeTaxCheckbox.addEventListener("change", () => {
          if (includeTaxCheckbox.checked) {
            setMode("remove");
          }
          recalc();
        });

        function createItemRow(price = "", qty = "1") {
          const row = document.createElement("div");
          row.className = "grid grid-cols-12 gap-2 items-center";
          row.innerHTML = `
        <div class="col-span-5">
          <label class="sr-only">Price</label>
          <input type="number" step="0.01" min="0" class="item-price w-full border border-gray-300 rounded-md px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Price" value="${price}">
        </div>
        <div class="col-span-3">
          <label class="sr-only">Quantity</label>
          <input type="number" step="1" min="0" class="item-qty w-full border border-gray-300 rounded-md px-3 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Qty" value="${qty}">
        </div>
        <div class="col-span-3 text-sm text-gray-600">
          <span class="item-line-total">$0.00</span>
        </div>
        <div class="col-span-1 text-right">
          <button type="button" class="remove-item text-gray-400 hover:text-red-600" aria-label="Remove item">&times;</button>
        </div>
      `;
          row.querySelector(".item-price").addEventListener("input", recalc);
          row.querySelector(".item-qty").addEventListener("input", recalc);
          row.querySelector(".remove-item").addEventListener("click", () => {
            row.remove();
            if (itemsContainer.children.length === 0) {
              addItemRow();
            } else {
              recalc();
            }
          });
          return row;
        }

        function addItemRow() {
          const row = createItemRow();
          itemsContainer.appendChild(row);
          recalc();
        }

        addItemBtn.addEventListener("click", addItemRow);

        function recalc() {
          errorMessage.classList.add("hidden");
          errorMessage.textContent = "";
          const currencySymbol = currencySelect.value || "$";
          const decimals = parseInt(roundingSelect.value, 10);

          // Collect items
          const priceInputs = itemsContainer.querySelectorAll(".item-price");
          const qtyInputs = itemsContainer.querySelectorAll(".item-qty");
          let subtotal = 0;
          priceInputs.forEach((priceInput, idx) => {
            const qtyInput = qtyInputs[idx];
            const price = parseNumber(priceInput.value);
            const qty = parseNumber(qtyInput.value);
            const lineTotalEl =
              itemsContainer.querySelectorAll(".item-line-total")[idx];

            let lineTotal = 0;
            if (!isNaN(price) && !isNaN(qty) && qty >= 0) {
              lineTotal = price * qty;
            }
            subtotal += lineTotal;
            lineTotalEl.textContent = formatMoney(
              lineTotal,
              decimals,
              currencySymbol
            );
          });

          const ratePercent = parseNumber(taxRateInput.value);
          const rate = isNaN(ratePercent) ? NaN : ratePercent / 100;

          let tax = 0;
          let total = 0;

          if (currentMode === "add") {
            if (isNaN(rate) || rate < 0) {
              errorMessage.textContent =
                "Please enter a valid tax rate to add tax.";
              errorMessage.classList.remove("hidden");
            }
            tax = isNaN(rate) ? 0 : subtotal * rate;
            total = subtotal + tax;
            extraResults.classList.add("hidden");
          } else if (currentMode === "remove") {
            // Treat entered values as totals including tax
            const totalAsEntered = subtotal;
            if (isNaN(rate) || rate < 0) {
              errorMessage.textContent =
                "Please enter a valid tax rate to remove tax.";
              errorMessage.classList.remove("hidden");
              tax = 0;
              total = totalAsEntered;
            } else if (totalAsEntered <= 0) {
              tax = 0;
              total = 0;
            } else {
              const net = totalAsEntered / (1 + rate);
              tax = totalAsEntered - net;
              subtotal = net;
              total = totalAsEntered;
              extraResults.classList.remove("hidden");
              netFromTotal.textContent = formatMoney(
                net,
                decimals,
                currencySymbol
              );
              taxFromTotal.textContent = formatMoney(
                tax,
                decimals,
                currencySymbol
              );
              rateFromTotal.textContent = (rate * 100).toFixed(4) + "%";
            }
          } else if (currentMode === "rate") {
            // Need at least two items: one as net, one as total, but here we treat subtotal as total and ask user to enter net in first row
            // Simpler: interpret first item as net, second item as total
            if (priceInputs.length < 2) {
              errorMessage.textContent =
                "Enter at least two line items: first as net price, second as total price.";
              errorMessage.classList.remove("hidden");
              extraResults.classList.add("hidden");
              subtotalDisplay.textContent = formatMoney(
                0,
                decimals,
                currencySymbol
              );
              taxDisplay.textContent = formatMoney(0, decimals, currencySymbol);
              totalDisplay.textContent = formatMoney(
                0,
                decimals,
                currencySymbol
              );
              return;
            }
            const net =
              parseNumber(priceInputs[0].value) *
              (parseNumber(qtyInputs[0].value) || 1);
            const tot =
              parseNumber(priceInputs[1].value) *
              (parseNumber(qtyInputs[1].value) || 1);
            if (isNaN(net) || isNaN(tot) || net <= 0 || tot <= net) {
              errorMessage.textContent =
                "For rate mode, net must be > 0 and total must be greater than net.";
              errorMessage.classList.remove("hidden");
              extraResults.classList.add("hidden");
              subtotalDisplay.textContent = formatMoney(
                0,
                decimals,
                currencySymbol
              );
              taxDisplay.textContent = formatMoney(0, decimals, currencySymbol);
              totalDisplay.textContent = formatMoney(
                0,
                decimals,
                currencySymbol
              );
              return;
            }
            const effRate = (tot - net) / net;
            subtotal = net;
            tax = tot - net;
            total = tot;
            extraResults.classList.remove("hidden");
            netFromTotal.textContent = formatMoney(
              net,
              decimals,
              currencySymbol
            );
            taxFromTotal.textContent = formatMoney(
              tax,
              decimals,
              currencySymbol
            );
            rateFromTotal.textContent = (effRate * 100).toFixed(4) + "%";
          }

          subtotalDisplay.textContent = formatMoney(
            subtotal,
            decimals,
            currencySymbol
          );
          taxDisplay.textContent = formatMoney(tax, decimals, currencySymbol);
          totalDisplay.textContent = formatMoney(
            total,
            decimals,
            currencySymbol
          );

          if (currentMode !== "remove" && currentMode !== "rate") {
            extraResults.classList.add("hidden");
          }
        }

        // Initialize with one row
        addItemRow();
      });
    </script>

