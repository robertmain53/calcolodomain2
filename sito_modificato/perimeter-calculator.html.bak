    <script>
      const shapeEl = document.getElementById('shape');
      const unitEl = document.getElementById('unit');
      const dimensionsEl = document.getElementById('dimensions');

      const resMain = document.getElementById('res-main');
      const resMainLabel = document.getElementById('res-main-label');
      const resM = document.getElementById('res-m');
      const resCm = document.getElementById('res-cm');
      const resFt = document.getElementById('res-ft');

      function buildDims(shape) {
        dimensionsEl.innerHTML = '';
        const addField = (id, label, def='') => {
          const wrap = document.createElement('div');
          wrap.innerHTML = `
            <label for="${id}" class="block text-sm font-medium text-gray-700 mb-1">${label}</label>
            <input id="${id}" type="number" min="0" step="any" value="${def}" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
          `;
          dimensionsEl.appendChild(wrap);
        };

        if (shape === 'rectangle') {
          addField('rect-length', 'Length', '5');
          addField('rect-width', 'Width', '3');
        } else if (shape === 'square') {
          addField('sq-side', 'Side', '4');
        } else if (shape === 'triangle') {
          addField('tri-a', 'Side a', '3');
          addField('tri-b', 'Side b', '4');
          addField('tri-c', 'Side c', '5');
        } else if (shape === 'circle') {
          addField('circle-radius', 'Radius', '2');
          addField('circle-diameter', 'Diameter (optional)', '');
          const info = document.createElement('p');
          info.className = 'text-xs text-gray-400 col-span-full';
          info.textContent = 'Enter radius or diameter. If both are present, diameter is used.';
          dimensionsEl.appendChild(info);
        } else if (shape === 'regular_polygon') {
          addField('reg-n', 'Number of sides (n)', '6');
          addField('reg-side', 'Side length', '2');
        } else if (shape === 'irregular_polygon') {
          const wrap = document.createElement('div');
          wrap.className = 'col-span-full';
          wrap.innerHTML = `
            <label for="irr-sides" class="block text-sm font-medium text-gray-700 mb-1">Side lengths (comma-separated)</label>
            <input id="irr-sides" type="text" value="3,4,5,3.5" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-blue-500 focus:border-blue-500">
            <p class="text-xs text-gray-400 mt-1">Example: 3, 4, 5, 3.5</p>
          `;
          dimensionsEl.appendChild(wrap);
        }
      }

      buildDims(shapeEl.value);
      shapeEl.addEventListener('change', () => buildDims(shapeEl.value));

      function toMeters(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v) || v < 0) return NaN;
        switch (unit) {
          case 'mm': return v / 1000;
          case 'cm': return v / 100;
          case 'm': return v;
          case 'in': return v * 0.0254;
          default: return v;
        }
      }

      function calculatePerimeter() {
        const shape = shapeEl.value;
        const unit = unitEl.value;

        let per_m = 0;

        if (shape === 'rectangle') {
          const L = toMeters(document.getElementById('rect-length').value, unit);
          const W = toMeters(document.getElementById('rect-width').value, unit);
          if ([L,W].some(isNaN)) return;
          per_m = 2 * (L + W);
        } else if (shape === 'square') {
          const a = toMeters(document.getElementById('sq-side').value, unit);
          if (isNaN(a)) return;
          per_m = 4 * a;
        } else if (shape === 'triangle') {
          const a = toMeters(document.getElementById('tri-a').value, unit);
          const b = toMeters(document.getElementById('tri-b').value, unit);
          const c = toMeters(document.getElementById('tri-c').value, unit);
          if ([a,b,c].some(isNaN)) return;
          per_m = a + b + c;
        } else if (shape === 'circle') {
          const dRaw = document.getElementById('circle-diameter').value;
          const rRaw = document.getElementById('circle-radius').value;
          let d = NaN;
          if (dRaw.trim() !== '') {
            d = toMeters(dRaw, unit);
            per_m = Math.PI * d;
          } else {
            const r = toMeters(rRaw, unit);
            if (isNaN(r)) return;
            per_m = 2 * Math.PI * r;
          }
        } else if (shape === 'regular_polygon') {
          const n = parseInt(document.getElementById('reg-n').value, 10);
          const s = toMeters(document.getElementById('reg-side').value, unit);
          if (isNaN(n) || isNaN(s) || n <= 2) return;
          per_m = n * s;
        } else if (shape === 'irregular_polygon') {
          const txt = document.getElementById('irr-sides').value;
          const parts = txt.split(',').map(t => t.trim()).filter(Boolean);
          let sum = 0;
          for (const p of parts) {
            const val = toMeters(p, unit);
            if (isNaN(val)) continue;
            sum += val;
          }
          per_m = sum;
        }

        // conversions
        const per_main = (() => {
          switch (unit) {
            case 'mm': return per_m * 1000;
            case 'cm': return per_m * 100;
            case 'm': return per_m;
            case 'in': return per_m / 0.0254;
            default: return per_m;
          }
        })();

        resMain.textContent = per_main > 0 ? per_main.toFixed(3).replace(/\.?0+$/,'') : '0';
        resMainLabel.textContent = unit;
        resM.textContent = per_m > 0 ? per_m.toFixed(3).replace(/\.?0+$/,'') + ' m' : '0';
        resCm.textContent = per_m > 0 ? (per_m * 100).toFixed(1).replace(/\.?0+$/,'') + ' cm' : '0';
        const per_ft = per_m * 3.2808398950131;
        resFt.textContent = per_m > 0 ? per_ft.toFixed(2) + ' ft' : '0';
      }

      document.getElementById('calc-btn').addEventListener('click', calculatePerimeter);
      // initial
      calculatePerimeter();
    </script>

