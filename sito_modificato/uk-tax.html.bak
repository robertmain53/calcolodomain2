    <script>
      // --- Tax parameters for 2024/25 England & NI (simplified) ---
      const TAX_CONFIG_2024_ENI = {
        personalAllowance: 12570,
        paTaperStart: 100000,
        paTaperEnd: 125140,
        bands: [
          { limit: 37700, rate: 0.2, label: "Basic rate (20%)" },
          { limit: 125140, rate: 0.4, label: "Higher rate (40%)" },
          { limit: Infinity, rate: 0.45, label: "Additional rate (45%)" },
        ],
        // NIC thresholds approximated annually
        ni: {
          primaryThreshold: 12570, // approx annual PT
          upperEarningsLimit: 50270,
          mainRate: 0.08, // example main rate
          upperRate: 0.02, // above UEL
        },
        studentLoan: {
          plan1: { threshold: 24990, rate: 0.09 },
          plan2: { threshold: 27295, rate: 0.09 },
          plan4: { threshold: 27660, rate: 0.09 },
          pgl: { threshold: 21000, rate: 0.06 },
        },
      };

      function clamp(value, min, max) {
        return Math.min(Math.max(value, min), max);
      }

      function formatGBP(value) {
        if (!isFinite(value)) return "£0";
        return (
          "£" +
          value.toLocaleString("en-GB", {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function calculatePersonalAllowance(config, adjustedNetIncome) {
        const { personalAllowance, paTaperStart, paTaperEnd } = config;
        if (adjustedNetIncome <= paTaperStart) return personalAllowance;
        if (adjustedNetIncome >= paTaperEnd) return 0;
        const excess = adjustedNetIncome - paTaperStart;
        const reduction = Math.floor(excess / 2);
        return Math.max(0, personalAllowance - reduction);
      }

      function calculateIncomeTax(config, taxableIncome) {
        let remaining = Math.max(0, taxableIncome);
        let tax = 0;
        const breakdown = [];

        let lowerLimit = 0;
        for (const band of config.bands) {
          if (remaining <= 0) break;
          const bandWidth = band.limit - lowerLimit;
          const inBand = Math.min(remaining, bandWidth);
          const bandTax = inBand * band.rate;
          if (inBand > 0) {
            breakdown.push({
              label: band.label,
              amount: inBand,
              tax: bandTax,
              rate: band.rate,
            });
          }
          tax += bandTax;
          remaining -= inBand;
          lowerLimit = band.limit;
        }

        return { tax, breakdown };
      }

      function calculateNI(config, employmentIncome, age) {
        const { primaryThreshold, upperEarningsLimit, mainRate, upperRate } =
          config.ni;
        if (age >= 66) {
          return {
            ni: 0,
            breakdown: ["Over State Pension age – no Class 1 employee NICs."],
          };
        }

        const income = Math.max(0, employmentIncome);
        let ni = 0;
        const breakdown = [];

        if (income <= primaryThreshold) {
          breakdown.push(
            `No employee NICs due (income below primary threshold).`
          );
          return { ni: 0, breakdown };
        }

        const mainBand =
          Math.min(income, upperEarningsLimit) - primaryThreshold;
        if (mainBand > 0) {
          const mainNi = mainBand * mainRate;
          ni += mainNi;
          breakdown.push(
            `${formatGBP(mainBand)} at main rate (${formatPercent(
              mainRate
            )}) = ${formatGBP(mainNi)}`
          );
        }

        if (income > upperEarningsLimit) {
          const upperBand = income - upperEarningsLimit;
          const upperNi = upperBand * upperRate;
          ni += upperNi;
          breakdown.push(
            `${formatGBP(
              upperBand
            )} above upper earnings limit at ${formatPercent(
              upperRate
            )} = ${formatGBP(upperNi)}`
          );
        }

        return { ni, breakdown };
      }

      function calculateStudentLoan(config, plan, income) {
        if (plan === "none")
          return { repayment: 0, description: "No student loan selected." };
        const rules = config.studentLoan[plan];
        if (!rules) return { repayment: 0, description: "Plan not supported." };

        const excess = Math.max(0, income - rules.threshold);
        const repayment = excess * rules.rate;
        const labelMap = {
          plan1: "Plan 1",
          plan2: "Plan 2",
          plan4: "Plan 4 (Scotland)",
          pgl: "Postgraduate loan",
        };
        const label = labelMap[plan] || "Student loan";

        if (excess <= 0) {
          return {
            repayment: 0,
            description: `${label}: income below threshold – no repayments due.`,
          };
        }

        return {
          repayment,
          description: `${label}: ${formatGBP(
            excess
          )} above threshold at ${formatPercent(rules.rate)} = ${formatGBP(
            repayment
          )}`,
        };
      }

      function updateResults() {
        const income = parseFloat(document.getElementById("income").value) || 0;
        const bonus = parseFloat(document.getElementById("bonus").value) || 0;
        const pension = Math.max(
          0,
          parseFloat(document.getElementById("pension").value) || 0
        );
        const age = clamp(
          parseInt(document.getElementById("age").value, 10) || 35,
          16,
          120
        );
        const payFrequency = document.getElementById("pay-frequency").value;
        const studentPlan = document.getElementById("student-loan").value;
        const niEmploymentOnly = document.getElementById(
          "show-ni-only-employment"
        ).checked;

        const config = TAX_CONFIG_2024_ENI;

        const grossIncome = Math.max(0, income + bonus);
        const adjustedNetIncome = Math.max(0, grossIncome - pension);
        const personalAllowance = calculatePersonalAllowance(
          config,
          adjustedNetIncome
        );
        const taxableIncome = Math.max(0, grossIncome - personalAllowance);

        const { tax, breakdown: taxBands } = calculateIncomeTax(
          config,
          taxableIncome
        );
        const employmentIncomeForNI = niEmploymentOnly ? income : grossIncome;
        const { ni, breakdown: niDetails } = calculateNI(
          config,
          employmentIncomeForNI,
          age
        );
        const { repayment: studentRepay, description: studentDesc } =
          calculateStudentLoan(config, studentPlan, grossIncome);

        const totalDeductions = tax + ni + studentRepay;
        const netIncome = grossIncome - totalDeductions;
        const effectiveRate =
          grossIncome > 0 ? totalDeductions / grossIncome : 0;

        // Update summary cards
        document.getElementById("gross-income").textContent =
          formatGBP(grossIncome);
        document.getElementById(
          "taxable-income"
        ).textContent = `Taxable income: ${formatGBP(taxableIncome)}`;
        document.getElementById("net-pay-annual").textContent =
          formatGBP(netIncome);

        const periodLabel =
          payFrequency === "monthly"
            ? "month"
            : payFrequency === "weekly"
            ? "week"
            : "year";
        const divisor =
          payFrequency === "monthly" ? 12 : payFrequency === "weekly" ? 52 : 1;
        document.getElementById("net-pay-period").textContent = `${formatGBP(
          netIncome / divisor
        )} per ${periodLabel}`;

        document.getElementById("total-deductions").textContent =
          formatGBP(totalDeductions);
        document.getElementById(
          "effective-tax-rate"
        ).textContent = `Effective rate: ${formatPercent(effectiveRate)}`;

        // Tax breakdown list
        const taxList = document.getElementById("tax-breakdown");
        taxList.innerHTML = "";
        if (personalAllowance > 0) {
          const li = document.createElement("li");
          li.textContent = `Personal allowance: ${formatGBP(
            personalAllowance
          )} tax‑free`;
          taxList.appendChild(li);
        } else {
          const li = document.createElement("li");
          li.textContent =
            "No personal allowance (tapered away above £125,140).";
          taxList.appendChild(li);
        }
        if (taxBands.length === 0) {
          const li = document.createElement("li");
          li.textContent = "No income tax due.";
          taxList.appendChild(li);
        } else {
          taxBands.forEach((b) => {
            const li = document.createElement("li");
            li.textContent = `${b.label}: ${formatGBP(b.amount)} → ${formatGBP(
              b.tax
            )}`;
            taxList.appendChild(li);
          });
          const totalLi = document.createElement("li");
          totalLi.className = "mt-1 font-semibold";
          totalLi.textContent = `Total income tax: ${formatGBP(tax)}`;
          taxList.appendChild(totalLi);
        }

        // NI breakdown
        const niList = document.getElementById("ni-breakdown");
        niList.innerHTML = "";
        niDetails.forEach((text) => {
          const li = document.createElement("li");
          li.textContent = text;
          niList.appendChild(li);
        });
        const niTotalLi = document.createElement("li");
        niTotalLi.className = "mt-1 font-semibold";
        niTotalLi.textContent = `Total employee NICs: ${formatGBP(ni)}`;
        niList.appendChild(niTotalLi);

        const studentLi = document.createElement("li");
        studentLi.className = "mt-1";
        studentLi.textContent = studentDesc;
        niList.appendChild(studentLi);
        if (studentRepay > 0) {
          const studentTotalLi = document.createElement("li");
          studentTotalLi.className = "font-semibold";
          studentTotalLi.textContent = `Student loan repayments: ${formatGBP(
            studentRepay
          )}`;
          niList.appendChild(studentTotalLi);
        }

        // Period table
        const tbody = document.getElementById("period-table-body");
        tbody.innerHTML = "";
        const periods = [
          { label: "Annual", divisor: 1 },
          { label: "Monthly", divisor: 12 },
          { label: "Weekly", divisor: 52 },
        ];
        periods.forEach((p) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b">${p.label}</td>
        <td class="px-3 py-2 border-b text-right">${formatGBP(
          grossIncome / p.divisor
        )}</td>
        <td class="px-3 py-2 border-b text-right">${formatGBP(
          tax / p.divisor
        )}</td>
        <td class="px-3 py-2 border-b text-right">${formatGBP(
          (ni + studentRepay) / p.divisor
        )}</td>
        <td class="px-3 py-2 border-b text-right">${formatGBP(
          netIncome / p.divisor
        )}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", updateResults);
        [
          "income",
          "bonus",
          "pension",
          "age",
          "pay-frequency",
          "student-loan",
          "show-ni-only-employment",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("change", updateResults);
        });
        updateResults();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
