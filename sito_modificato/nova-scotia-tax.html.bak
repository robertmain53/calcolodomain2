    <script>
      // --- Tax parameters (approximate, for 2025 planning use only) ---
      const FEDERAL_BRACKETS = [
        { limit: 55867, rate: 0.15 },
        { limit: 111733, rate: 0.205 },
        { limit: 173205, rate: 0.26 },
        { limit: 246752, rate: 0.29 },
        { limit: Infinity, rate: 0.33 },
      ];
      const NS_BRACKETS = [
        { limit: 29590, rate: 0.0879 },
        { limit: 59180, rate: 0.1495 },
        { limit: 93000, rate: 0.1667 },
        { limit: 150000, rate: 0.175 },
        { limit: Infinity, rate: 0.21 },
      ];

      // Basic personal amounts (approximate)
      const FED_BASIC_AMOUNT = 15305;
      const NS_BASIC_AMOUNT = 12000;

      // CPP & EI (approximate 2025)
      const CPP_RATE = 0.0595;
      const CPP_YMPE = 73500;
      const CPP_BASIC_EXEMPT = 3500;

      const EI_RATE = 0.0166;
      const EI_MAX_INSURABLE = 64000;

      function calcProgressiveTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const band = Math.min(remaining, b.limit - lastLimit);
          tax += band * b.rate;
          remaining -= band;
          lastLimit = b.limit;
        }
        return Math.max(0, tax);
      }

      function formatMoney(v) {
        if (!isFinite(v)) return "$0";
        return "$" + v.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function recalcTax() {
        const income = parseFloat(document.getElementById("income").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("other-income").value) || 0;
        const extraCredits =
          parseFloat(document.getElementById("extra-credits").value) || 0;
        const includeCPP = document.getElementById("include-cpp").checked;
        const includeEI = document.getElementById("include-ei").checked;

        const gross = Math.max(0, income + otherIncome);

        // Taxable income after basic amounts and extra credits
        const federalTaxable = Math.max(
          0,
          gross - FED_BASIC_AMOUNT - extraCredits
        );
        const nsTaxable = Math.max(0, gross - NS_BASIC_AMOUNT - extraCredits);

        const federalTax = calcProgressiveTax(federalTaxable, FEDERAL_BRACKETS);
        const nsTax = calcProgressiveTax(nsTaxable, NS_BRACKETS);

        // CPP
        let cpp = 0;
        if (includeCPP) {
          const pensionable = Math.min(
            Math.max(0, income - CPP_BASIC_EXEMPT),
            CPP_YMPE - CPP_BASIC_EXEMPT
          );
          cpp = pensionable * CPP_RATE;
        }

        // EI
        let ei = 0;
        if (includeEI) {
          const insurable = Math.min(income, EI_MAX_INSURABLE);
          ei = insurable * EI_RATE;
        }

        const totalDeductions = federalTax + nsTax + cpp + ei;
        const netPay = gross - totalDeductions;

        document.getElementById("taxable-income").textContent =
          formatMoney(gross);
        document.getElementById("federal-tax").textContent =
          formatMoney(federalTax);
        document.getElementById("ns-tax").textContent = formatMoney(nsTax);
        document.getElementById("cpp").textContent = formatMoney(cpp);
        document.getElementById("ei").textContent = formatMoney(ei);
        document.getElementById("total-deductions").textContent =
          formatMoney(totalDeductions);
        document.getElementById("net-pay").textContent = formatMoney(netPay);

        const effRate = gross > 0 ? ((federalTax + nsTax) / gross) * 100 : 0;
        const slider = document.getElementById("effective-tax-slider");
        const label = document.getElementById("effective-tax-label");
        slider.value = Math.min(60, Math.max(0, effRate));
        label.textContent = effRate.toFixed(1) + "%";
      }

      function recalcHST() {
        const amount =
          parseFloat(document.getElementById("hst-amount").value) || 0;
        const rate =
          parseFloat(document.getElementById("hst-rate").value) || 0.15;
        const hst = amount * rate;
        const total = amount + hst;
        document.getElementById("hst-value").textContent = formatMoney(hst);
        document.getElementById("hst-total").textContent = formatMoney(total);
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", recalcTax);
        document
          .getElementById("hst-calc-btn")
          .addEventListener("click", recalcHST);

        // Recalculate on input changes for responsiveness
        [
          "income",
          "other-income",
          "extra-credits",
          "include-cpp",
          "include-ei",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", () => {
              // debounce slightly
              clearTimeout(el._t);
              el._t = setTimeout(recalcTax, 150);
            });
          }
        });
        ["hst-amount", "hst-rate"].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", () => {
              clearTimeout(el._t);
              el._t = setTimeout(recalcHST, 150);
            });
          }
        });

        recalcTax();
        recalcHST();
      });

      // MathJax config (kept from template)
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
