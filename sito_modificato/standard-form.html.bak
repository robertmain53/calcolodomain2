        // Helpers
        function parseNumberInput(value, label) {
          var s = String(value || "").trim();
          if (!s) {
            return { ok: false, error: label + " is empty." };
          }
          // allow decimal + optional exponent, like -1.2e-5
          var pattern = /^[+-]?(?:\d+(?:\.\d*)?|\.\d+)(?:[eE][+-]?\d+)?$/;
          if (!pattern.test(s)) {
            return {
              ok: false,
              error:
                label +
                " must be a valid decimal number (optionally with E-notation).",
            };
          }
          var n = Number(s);
          if (!Number.isFinite(n)) {
            return { ok: false, error: label + " is not a finite number." };
          }
          return { ok: true, value: n };
        }

        function parseInteger(value, label) {
          var s = String(value || "").trim();
          if (!s) return { ok: false, error: label + " is empty." };
          if (!/^[+-]?\d+$/.test(s)) {
            return { ok: false, error: label + " must be an integer." };
          }
          var n = Number(s);
          if (!Number.isInteger(n) || !Number.isFinite(n)) {
            return { ok: false, error: label + " is not a valid integer." };
          }
          return { ok: true, value: n };
        }

        function toStandardForm(x, sigFig) {
          if (x === 0) {
            return {
              zero: true,
              text: "0",
              note: "Zero does not have a unique standard form a × 10ⁿ; by convention we simply write 0.",
            };
          }
          var sign = x < 0 ? -1 : 1;
          var absx = Math.abs(x);
          var n = Math.floor(Math.log10(absx));
          var a = absx / Math.pow(10, n);

          // round a to sigFig significant figures using toPrecision
          var aRoundedStr = a.toPrecision(sigFig);
          var aRounded = Number(aRoundedStr);
          // adjust if rounding pushes a to 10 or more
          if (aRounded >= 10) {
            aRounded = aRounded / 10;
            n = n + 1;
          }
          aRounded = sign * aRounded;

          return {
            zero: false,
            a: aRounded,
            n: n,
          };
        }

        function formatCoefficient(a, sigFig) {
          // use toPrecision for consistent sig figs
          if (!Number.isFinite(a)) return String(a);
          return a
            .toPrecision(sigFig)
            .replace(/(\.[0-9]*[1-9])0+$/, "$1")
            .replace(/\.0+$/, "");
