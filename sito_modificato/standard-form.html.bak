          e.preventDefault();
          hide(tsError);
          hide(tsResults);
          tsMain.innerHTML = "";
          tsSteps.textContent = "";
          tsEnotation.textContent = "";

          var parsed = parseNumberInput(tsInput.value, "Number");
          if (!parsed.ok) {
            tsError.textContent = parsed.error;
            show(tsError);
            return;
          }
          var x = parsed.value;
          var sig = Number(tsSigfigs.value) || 3;
          if (!Number.isInteger(sig) || sig < 1 || sig > 15) {
            sig = 3;
          }

          var sf = toStandardForm(x, sig);
          if (sf.zero) {
            tsMain.innerHTML =
              "The number is <strong>0</strong>. Zero does not have a unique standard form " +
              '<span class="inline-code">a × 10ⁿ</span>; we simply write <strong>0</strong>.';
            tsSteps.textContent =
              "Any representation 0 × 10ⁿ equals 0, so there is no single preferred exponent n.";
            show(tsResults);
            return;
          }

          var a = sf.a;
          var n = sf.n;
          var aStr = formatCoefficient(a, sig);
          var originalFormatted = formatDecimal(x);

          tsMain.innerHTML =
            "Writing " +
            '<span class="vector-pill">x = ' +
            originalFormatted +
            "</span>" +
            " in standard form, we obtain " +
            '<span class="vector-pill">x = ' +
            aStr +
            " × 10" +
            "<sup>" +
            n +
            "</sup></span>" +
            " (to " +
            sig +
            " significant figure" +
            (sig !== 1 ? "s" : "") +
            ").";

          tsSteps.textContent =
            "Step: take the base-10 logarithm of |x| to find the exponent n = ⌊log₁₀|x|⌋, then set " +
            "a = x / 10ⁿ and round a to " +
            sig +
            " significant figure" +
            (sig !== 1 ? "s" : "") +
            " so that 1 ≤ |a| < 10.";

