    <script>
      // Simple illustrative SDLT bands (NOT guaranteed current – for educational use)
      const BANDS = {
        mover: [
          { from: 0, to: 250000, rate: 0.0 },
          { from: 250000, to: 925000, rate: 0.05 },
          { from: 925000, to: 1500000, rate: 0.1 },
          { from: 1500000, to: Infinity, rate: 0.12 },
        ],
        first: [
          // Illustrative: higher 0% band for first-time buyers
          { from: 0, to: 425000, rate: 0.0 },
          { from: 425000, to: 625000, rate: 0.05 },
          { from: 625000, to: 925000, rate: 0.1 },
          { from: 925000, to: Infinity, rate: 0.12 },
        ],
        additional: [
          // Standard bands + 3% surcharge
          { from: 0, to: 250000, rate: 0.03 },
          { from: 250000, to: 925000, rate: 0.08 },
          { from: 925000, to: 1500000, rate: 0.13 },
          { from: 1500000, to: Infinity, rate: 0.15 },
        ],
      };

      function formatMoney(v) {
        if (!isFinite(v)) return "£0";
        return "£" + v.toLocaleString("en-GB", { maximumFractionDigits: 0 });
      }

      function describeBuyer(type) {
        switch (type) {
          case "first":
            return "You selected a first-time buyer. The example bands below assume a higher 0% threshold for eligible first-time buyers.";
          case "additional":
            return "You selected an additional property / buy-to-let purchase. A 3 percentage point surcharge is added to each band in this example.";
          default:
            return "You selected a standard home mover replacing your main residence. The example bands below show typical main-residence SDLT rates.";
        }
      }

      function describeRange(from, to) {
        if (to === Infinity) return `Over ${formatMoney(from)}`;
        if (from === 0) return `Up to ${formatMoney(to)}`;
        return `${formatMoney(from + 1)} – ${formatMoney(to)}`;
      }

      function calculateBands(price, type) {
        const bands = BANDS[type] || BANDS.mover;
        const rows = [];
        let total = 0;

        bands.forEach((band, idx) => {
          if (price <= band.from) return;
          const upper = Math.min(price, band.to);
          const taxable = Math.max(0, upper - band.from);
          const tax = taxable * band.rate;
          total += tax;

          rows.push({
            label: `Band ${idx + 1}`,
            range: describeRange(band.from, band.to),
            rate: (band.rate * 100).toFixed(1).replace(/\.0$/, "") + "%",
            tax,
          });
        });

        return { rows, total };
      }

      document.addEventListener("DOMContentLoaded", () => {
        const buyerTypeEl = document.getElementById("buyerType");
        const priceEl = document.getElementById("propertyPrice");
        const explainBtn = document.getElementById("explainBtn");
        const panel = document.getElementById("explanationPanel");
        const buyerSummaryEl = document.getElementById("buyerSummary");
        const tbody = document.getElementById("bandsTableBody");
        const totalCell = document.getElementById("totalTaxCell");

        document.querySelectorAll("button[data-quick]").forEach((btn) => {
          btn.addEventListener("click", () => {
            priceEl.value = btn.getAttribute("data-quick");
          });
        });

        function updateExplanation() {
          const price = parseFloat(priceEl.value);
          const type = buyerTypeEl.value;

          if (!price || price <= 0) {
            tbody.innerHTML = "";
            totalCell.textContent = "£0";
            buyerSummaryEl.textContent =
              "Enter a property price to see how SDLT is split across the bands.";
            return;
          }

          const { rows, total } = calculateBands(price, type);
          buyerSummaryEl.textContent =
            describeBuyer(type) +
            " For a price of " +
            formatMoney(price) +
            ", the SDLT is split as follows:";

          tbody.innerHTML = rows
            .map(
              (r) => `
        <tr>
          <td class="px-3 py-2 border-b">${r.label}</td>
          <td class="px-3 py-2 border-b">${r.range}</td>
          <td class="px-3 py-2 border-b">${r.rate}</td>
          <td class="px-3 py-2 border-b">${formatMoney(r.tax)}</td>
        </tr>
      `
            )
            .join("");

          totalCell.textContent = formatMoney(total);
        }

        explainBtn.addEventListener("click", () => {
          panel.classList.remove("hidden");
          updateExplanation();
          panel.scrollIntoView({ behavior: "smooth", block: "start" });
        });

        buyerTypeEl.addEventListener("change", () => {
          if (!panel.classList.contains("hidden")) updateExplanation();
        });
        priceEl.addEventListener("input", () => {
          if (!panel.classList.contains("hidden")) updateExplanation();
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
