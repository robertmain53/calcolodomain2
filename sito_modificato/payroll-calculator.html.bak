    <script>
      // Utility: format currency
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0.00";
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          abs
            .toLocaleString(undefined, {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2,
              style: "currency",
              currency: "USD",
            })
            .replace(/^US\$/, "")
        );
      }

      function fmtPercent(value) {
        if (!isFinite(value)) return "0.0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }

      function clampNonNegative(v) {
        return v < 0 ? 0 : v;
      }

      function recalc() {
        const errorEl = document.getElementById("calc-error");
        errorEl.classList.add("hidden");

        const mode = document
          .getElementById("mode-salary")
          .classList.contains("bg-blue-50")
          ? "salary"
          : "hourly";
        const periodsPerYear = getNumber("pay-frequency") || 1;

        // Earnings
        let regularPay = 0,
          overtimePay = 0,
          bonus = getNumber("bonus"),
          otherTaxable = getNumber("other-taxable");

        if (mode === "salary") {
          const annualSalary = getNumber("annual-salary");
          if (annualSalary < 0) {
            errorEl.classList.remove("hidden");
            return;
          }
          regularPay = annualSalary / periodsPerYear;
          overtimePay = 0;
        } else {
          const rate = getNumber("hourly-rate");
          const hoursReg = getNumber("hours-regular");
          const hoursOt = getNumber("hours-overtime");
          const otMult = getNumber("overtime-multiplier") || 1;
          if (rate < 0 || hoursReg < 0 || hoursOt < 0 || otMult < 0) {
            errorEl.classList.remove("hidden");
            return;
          }
          regularPay = rate * hoursReg;
          overtimePay = rate * hoursOt * otMult;
        }

        const gross = clampNonNegative(
          regularPay + overtimePay + bonus + otherTaxable
        );

        // Deductions & taxes
        const pretax = clampNonNegative(getNumber("pretax-deductions"));
        const posttax = clampNonNegative(getNumber("posttax-deductions"));

        let taxable = gross - pretax;
        if (taxable < 0) taxable = 0;

        const rateIncome = clampNonNegative(getNumber("tax-income"));
        const rateSocial = clampNonNegative(getNumber("tax-social"));
        const rateOther = clampNonNegative(getNumber("tax-other"));

        const taxIncome = (taxable * rateIncome) / 100;
        const taxSocial = (taxable * rateSocial) / 100;
        const taxOther = (taxable * rateOther) / 100;

        const totalEmployeeDeductions =
          pretax + posttax + taxIncome + taxSocial + taxOther;
        let net = gross - totalEmployeeDeductions;
        if (net < 0) net = 0;

        // Employer costs
        const employerToggleOn = document
          .getElementById("toggle-employer")
          .classList.contains("bg-blue-600");
        let employerExtras = 0;
        if (employerToggleOn) {
          const rEmpTax = clampNonNegative(getNumber("employer-taxes"));
          const rEmpBen = clampNonNegative(getNumber("employer-benefits"));
          const rEmpOther = clampNonNegative(getNumber("employer-other"));
          const totalRate = (rEmpTax + rEmpBen + rEmpOther) / 100;
          employerExtras = gross * totalRate;
        }
        const employerCost = gross + employerExtras;

        // Annualized
        const annualGross = gross * periodsPerYear;
        const annualNet = net * periodsPerYear;
        const annualDeductions = totalEmployeeDeductions * periodsPerYear;
        const annualEmployer = employerCost * periodsPerYear;
        const effectiveRate =
          annualGross > 0 ? (annualDeductions / annualGross) * 100 : 0;

        // Update UI
        document.getElementById("res-gross").textContent = fmtCurrency(gross);
        document.getElementById("res-net").textContent = fmtCurrency(net);
        document.getElementById("res-employer").textContent =
          fmtCurrency(employerCost);

        document.getElementById("res-regular").textContent =
          fmtCurrency(regularPay);
        document.getElementById("res-overtime").textContent =
          fmtCurrency(overtimePay);
        document.getElementById("res-bonus").textContent = fmtCurrency(
          bonus + otherTaxable
        );
        document.getElementById("res-gross-2").textContent = fmtCurrency(gross);
        document.getElementById("res-pretax").textContent =
          "-" + fmtCurrency(pretax);
        document.getElementById("res-taxable").textContent =
          fmtCurrency(taxable);
        document.getElementById("res-tax-income").textContent =
          "-" + fmtCurrency(taxIncome);
        document.getElementById("res-tax-social").textContent =
          "-" + fmtCurrency(taxSocial);
        document.getElementById("res-tax-other").textContent =
          "-" + fmtCurrency(taxOther);
        document.getElementById("res-posttax").textContent =
          "-" + fmtCurrency(posttax);
        document.getElementById("res-net-2").textContent = fmtCurrency(net);

        document.getElementById("res-annual-gross").textContent =
          fmtCurrency(annualGross);
        document.getElementById("res-annual-net").textContent =
          fmtCurrency(annualNet);
        document.getElementById("res-annual-deductions").textContent =
          "-" + fmtCurrency(annualDeductions);
        document.getElementById("res-annual-employer").textContent =
          fmtCurrency(annualEmployer);
        document.getElementById("res-effective-rate").textContent =
          fmtPercent(effectiveRate);
      }

      function setMode(mode) {
        const salaryBtn = document.getElementById("mode-salary");
        const hourlyBtn = document.getElementById("mode-hourly");
        const salaryFields = document.getElementById("salary-fields");
        const hourlyFields = document.getElementById("hourly-fields");

        if (mode === "salary") {
          salaryBtn.classList.add("bg-blue-50", "text-blue-700", "font-medium");
          hourlyBtn.classList.remove(
            "bg-blue-50",
            "text-blue-700",
            "font-medium"
          );
          hourlyBtn.classList.add("text-gray-600");
          salaryFields.classList.remove("hidden");
          hourlyFields.classList.add("hidden");
        } else {
          hourlyBtn.classList.add("bg-blue-50", "text-blue-700", "font-medium");
          salaryBtn.classList.remove(
            "bg-blue-50",
            "text-blue-700",
            "font-medium"
          );
          salaryBtn.classList.add("text-gray-600");
          hourlyFields.classList.remove("hidden");
          salaryFields.classList.add("hidden");
        }
        recalc();
      }

      function toggleEmployerSection() {
        const toggle = document.getElementById("toggle-employer");
        const thumb = toggle.querySelector(".toggle-thumb");
        const section = document.getElementById("employer-section");

        const isOn = toggle.classList.contains("bg-blue-600");
        if (isOn) {
          toggle.classList.remove("bg-blue-600");
          toggle.classList.add("bg-gray-200");
          thumb.classList.remove("translate-x-9");
          thumb.classList.add("translate-x-1");
          section.classList.add("opacity-40", "pointer-events-none");
        } else {
          toggle.classList.remove("bg-gray-200");
          toggle.classList.add("bg-blue-600");
          thumb.classList.remove("translate-x-1");
          thumb.classList.add("translate-x-9");
          section.classList.remove("opacity-40", "pointer-events-none");
        }
        recalc();
      }

      function resetForm() {
        document.getElementById("annual-salary").value = 60000;
        document.getElementById("bonus").value = 0;
        document.getElementById("other-taxable").value = 0;
        document.getElementById("hourly-rate").value = 25;
        document.getElementById("hours-regular").value = 80;
        document.getElementById("hours-overtime").value = 0;
        document.getElementById("overtime-multiplier").value = 1.5;
        document.getElementById("tax-income").value = 20;
        document.getElementById("tax-social").value = 7.5;
        document.getElementById("tax-other").value = 0;
        document.getElementById("pretax-deductions").value = 0;
        document.getElementById("posttax-deductions").value = 0;
        document.getElementById("employer-taxes").value = 7.5;
        document.getElementById("employer-benefits").value = 5;
        document.getElementById("employer-other").value = 0;
        document.getElementById("pay-frequency").value = 26;
        setMode("salary");

        // Turn employer toggle off
        const toggle = document.getElementById("toggle-employer");
        const thumb = toggle.querySelector(".toggle-thumb");
        const section = document.getElementById("employer-section");
        toggle.classList.remove("bg-blue-600");
        toggle.classList.add("bg-gray-200");
        thumb.classList.remove("translate-x-9");
        thumb.classList.add("translate-x-1");
        section.classList.add("opacity-40", "pointer-events-none");

        recalc();
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("mode-salary")
          .addEventListener("click", () => setMode("salary"));
        document
          .getElementById("mode-hourly")
          .addEventListener("click", () => setMode("hourly"));

        document
          .getElementById("toggle-employer")
          .addEventListener("click", toggleEmployerSection);
        document.getElementById("calc-btn").addEventListener("click", recalc);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetForm);

        // Recalculate on input changes (debounced)
        const inputs = document.querySelectorAll(
          "#annual-salary,#bonus,#other-taxable,#hourly-rate,#hours-regular,#hours-overtime,#overtime-multiplier,#tax-income,#tax-social,#tax-other,#pretax-deductions,#posttax-deductions,#employer-taxes,#employer-benefits,#employer-other,#pay-frequency"
        );
        let debounceTimer;
        inputs.forEach((el) => {
          el.addEventListener("input", () => {
            clearTimeout(debounceTimer);
            debounceTimer = setTimeout(recalc, 200);
          });
        });

        // Simple FAQ toggle (in addition to global script_faq if present)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const icon = btn.querySelector("span:last-child");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((i) => (i.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                icon.textContent = "−";
              }
            });
          });

        resetForm();
      });
    </script>

