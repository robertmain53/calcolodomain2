    <script>
      // Simple plotting helpers (no external chart library)
      function clearCanvas(ctx) {
        ctx.clearRect(0, 0, ctx.canvas.width, ctx.canvas.height);
      }

      function plotLines(ctx, series, options = {}) {
        const padding = 30;
        const width = ctx.canvas.width;
        const height = ctx.canvas.height;
        clearCanvas(ctx);

        const allX = [];
        const allY = [];
        series.forEach((s) => {
          s.data.forEach((p) => {
            allX.push(p.x);
            allY.push(p.y);
          });
        });
        if (!allX.length) return;

        const minX = Math.min(...allX);
        const maxX = Math.max(...allX);
        const minY = Math.min(...allY);
        const maxY = Math.max(...allY);
        const dx = maxX - minX || 1;
        const dy = maxY - minY || 1;

        function toCanvas(p) {
          const x = padding + ((p.x - minX) / dx) * (width - 2 * padding);
          const y =
            height - padding - ((p.y - minY) / dy) * (height - 2 * padding);
          return { x, y };
        }

        // Axes
        ctx.strokeStyle = "#d1d5db";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(padding, padding);
        ctx.lineTo(padding, height - padding);
        ctx.lineTo(width - padding, height - padding);
        ctx.stroke();

        // Zero line (if within range)
        if (minY < 0 && maxY > 0) {
          const y0 = toCanvas({ x: minX, y: 0 }).y;
          ctx.strokeStyle = "#e5e7eb";
          ctx.beginPath();
          ctx.moveTo(padding, y0);
          ctx.lineTo(width - padding, y0);
          ctx.stroke();
        }

        // Series
        series.forEach((s) => {
          ctx.strokeStyle = s.color || "#2563eb";
          ctx.lineWidth = 1.5;
          ctx.beginPath();
          s.data.forEach((p, i) => {
            const c = toCanvas(p);
            if (i === 0) ctx.moveTo(c.x, c.y);
            else ctx.lineTo(c.x, c.y);
          });
          ctx.stroke();
        });
      }

      function plotProfile(ctx, points) {
        const padding = 20;
        const width = ctx.canvas.width;
        const height = ctx.canvas.height;
        clearCanvas(ctx);
        if (!points.length) return;

        const xs = points.map((p) => p.x);
        const ys = points.map((p) => p.y);
        const minX = Math.min(...xs);
        const maxX = Math.max(...xs);
        const minY = Math.min(...ys);
        const maxY = Math.max(...ys);
        const dx = maxX - minX || 1;
        const dy = maxY - minY || 1;
        const d = Math.max(dx, dy);

        function toCanvas(p) {
          const x = padding + ((p.x - minX) / d) * (width - 2 * padding);
          const y =
            height - padding - ((p.y - minY) / d) * (height - 2 * padding);
          return { x, y };
        }

        ctx.strokeStyle = "#9ca3af";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.arc(width / 2, height / 2, 3, 0, 2 * Math.PI);
        ctx.stroke();

        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 1.5;
        ctx.beginPath();
        points.forEach((p, i) => {
          const c = toCanvas(p);
          if (i === 0) ctx.moveTo(c.x, c.y);
          else ctx.lineTo(c.x, c.y);
        });
        ctx.closePath();
        ctx.stroke();
      }

      function computeCam() {
        const baseR = parseFloat(document.getElementById("baseRadius").value);
        const lift = parseFloat(document.getElementById("lift").value);
        const riseDeg = parseFloat(document.getElementById("riseAngle").value);
        const dwellDeg = parseFloat(
          document.getElementById("dwellAngle").value
        );
        const returnDeg = parseFloat(
          document.getElementById("returnAngle").value
        );
        const rpm = parseFloat(document.getElementById("rpm").value);
        const law = document.getElementById("motionLaw").value;
        const stepDeg = parseFloat(document.getElementById("stepAngle").value);

        if (
          baseR <= 0 ||
          lift <= 0 ||
          riseDeg <= 0 ||
          returnDeg <= 0 ||
          stepDeg <= 0 ||
          rpm <= 0
        ) {
          alert(
            "Please enter positive values for radius, lift, angles, step and rpm."
          );
          return null;
        }
        const totalUsed = riseDeg + dwellDeg + returnDeg;
        if (totalUsed > 360 + 1e-6) {
          alert("Rise + dwell + return angles must not exceed 360°.");
          return null;
        }
        const lowDwellDeg = 360 - totalUsed;

        const omega = (2 * Math.PI * rpm) / 60; // rad/s
        const data = [];
        for (let thetaDeg = 0; thetaDeg <= 360 + 1e-6; thetaDeg += stepDeg) {
          const thetaRad = (thetaDeg * Math.PI) / 180;
          let s = 0,
            v = 0,
            a = 0;

          if (thetaDeg <= riseDeg + 1e-9) {
            // Rise
            const beta = (riseDeg * Math.PI) / 180;
            const u = thetaRad / beta;
            ({ s, v, a } = motionLaw(law, u, lift, beta, omega));
          } else if (thetaDeg <= riseDeg + dwellDeg + 1e-9) {
            // High dwell
            s = lift;
            v = 0;
            a = 0;
          } else if (thetaDeg <= riseDeg + dwellDeg + returnDeg + 1e-9) {
            // Return
            const start = ((riseDeg + dwellDeg) * Math.PI) / 180;
            const beta = (returnDeg * Math.PI) / 180;
            const u = (thetaRad - start) / beta;
            const res = motionLaw(law, u, lift, beta, omega);
            s = lift - res.s; // descending
            v = -res.v;
            a = -res.a;
          } else {
            // Low dwell at zero
            s = 0;
            v = 0;
            a = 0;
          }

          const r = baseR + s;
          const x = r * Math.cos(thetaRad);
          const y = r * Math.sin(thetaRad);
          data.push({ thetaDeg, s, v, a, x, y });
        }
        return { data, lowDwellDeg };
      }

      function motionLaw(law, u, h, beta, omega) {
        u = Math.max(0, Math.min(1, u));
        let s = 0,
          vtheta = 0,
          atheta = 0; // per radian
        if (law === "cv") {
          s = h * u;
          vtheta = h / beta;
          atheta = 0;
        } else if (law === "shm") {
          s = (h / 2) * (1 - Math.cos(Math.PI * u));
          vtheta = ((h * Math.PI) / (2 * beta)) * Math.sin(Math.PI * u);
          atheta =
            ((h * Math.PI * Math.PI) / (2 * beta * beta)) *
            Math.cos(Math.PI * u);
        } else {
          // 3-4-5 polynomial
          s =
            h *
            (10 * Math.pow(u, 3) - 15 * Math.pow(u, 4) + 6 * Math.pow(u, 5));
          const dsdu = h * (30 * u * u - 60 * u * u * u + 30 * u * u * u * u);
          const d2sdu2 = h * (60 * u - 180 * u * u + 120 * u * u * u);
          vtheta = dsdu / beta;
          atheta = d2sdu2 / (beta * beta);
        }
        const v = vtheta * omega;
        const a = atheta * omega * omega;
        return { s, v, a };
      }

      function updateSummary(data) {
        if (!data || !data.length) return;
        const maxDisp = Math.max(...data.map((p) => p.s));
        const maxVel = Math.max(...data.map((p) => Math.abs(p.v)));
        const maxAcc = Math.max(...data.map((p) => Math.abs(p.a)));
        document.getElementById("summaryDisp").textContent = maxDisp.toFixed(3);
        document.getElementById("summaryVel").textContent = maxVel.toFixed(1);
        document.getElementById("summaryAcc").textContent = maxAcc.toFixed(1);
      }

      function updateTable(data) {
        const tbody = document.getElementById("coordsTableBody");
        tbody.innerHTML = "";
        const maxRows = 150;
        data.slice(0, maxRows).forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1">${row.thetaDeg.toFixed(2)}</td>
        <td class="px-2 py-1">${row.s.toFixed(3)}</td>
        <td class="px-2 py-1">${row.x.toFixed(3)}</td>
        <td class="px-2 py-1">${row.y.toFixed(3)}</td>
      `;
          tbody.appendChild(tr);
        });
        if (data.length > maxRows) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="4" class="px-2 py-1 text-gray-500">Showing first ${maxRows} points of ${data.length}. Download CSV for full data.</td>`;
          tbody.appendChild(tr);
        }
      }

      function downloadCsv(data) {
        const header = ["theta_deg", "displacement_mm", "x_mm", "y_mm"];
        const rows = data.map((p) =>
          [p.thetaDeg, p.s, p.x, p.y].map((v) => v.toFixed(6)).join(",")
        );
        const csv = [header.join(","), ...rows].join("\n");
        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "cam_profile.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      let lastData = null;

      window.addEventListener("load", () => {
        const dispCtx = document.getElementById("dispCanvas").getContext("2d");
        const velAccCtx = document
          .getElementById("velAccCanvas")
          .getContext("2d");
        const profileCtx = document
          .getElementById("profileCanvas")
          .getContext("2d");

        document.getElementById("calcBtn").addEventListener("click", () => {
          const result = computeCam();
          if (!result) return;
          lastData = result.data;
          updateSummary(result.data);
          updateTable(result.data);

          const dispSeries = [
            {
              data: result.data.map((p) => ({ x: p.thetaDeg, y: p.s })),
              color: "#2563eb",
            },
          ];
          plotLines(dispCtx, dispSeries);

          const velAccSeries = [
            {
              data: result.data.map((p) => ({ x: p.thetaDeg, y: p.v })),
              color: "#16a34a",
            },
            {
              data: result.data.map((p) => ({ x: p.thetaDeg, y: p.a })),
              color: "#dc2626",
            },
          ];
          plotLines(velAccCtx, velAccSeries);

          plotProfile(
            profileCtx,
            result.data.map((p) => ({ x: p.x, y: p.y }))
          );

          const btn = document.getElementById("downloadCsvBtn");
          btn.disabled = false;
        });

        document.getElementById("resetBtn").addEventListener("click", () => {
          document.getElementById("baseRadius").value = 30;
          document.getElementById("lift").value = 10;
          document.getElementById("riseAngle").value = 90;
          document.getElementById("dwellAngle").value = 60;
          document.getElementById("returnAngle").value = 90;
          document.getElementById("rpm").value = 60;
          document.getElementById("motionLaw").value = "shm";
          document.getElementById("stepAngle").value = 2;
          clearCanvas(dispCtx);
          clearCanvas(velAccCtx);
          clearCanvas(profileCtx);
          document.getElementById("coordsTableBody").innerHTML =
            '<tr><td class="px-2 py-1 text-gray-500" colspan="4">Run a calculation to see cam coordinates.</td></tr>';
          document.getElementById("summaryDisp").textContent = "–";
          document.getElementById("summaryVel").textContent = "–";
          document.getElementById("summaryAcc").textContent = "–";
          document.getElementById("downloadCsvBtn").disabled = true;
          lastData = null;
        });

        document
          .getElementById("downloadCsvBtn")
          .addEventListener("click", () => {
            if (lastData && lastData.length) downloadCsv(lastData);
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
