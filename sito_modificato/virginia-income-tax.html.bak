    <script>
      // --- Core Virginia tax logic ---
      const VA_BRACKETS = [
        { upTo: 3000, rate: 0.02 },
        { upTo: 5000, rate: 0.03 },
        { upTo: 17000, rate: 0.05 },
        { upTo: Infinity, rate: 0.0575 },
      ];

      // Typical standard deduction assumptions (can be overridden by user)
      const VA_STANDARD_DEDUCTION = {
        2024: {
          single: 8000,
          mfs: 8000,
          hoh: 8000,
          mfj: 16000,
        },
        2023: {
          single: 8000,
          mfs: 8000,
          hoh: 8000,
          mfj: 16000,
        },
      };

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getStandardDeduction(year, status) {
        const yearData =
          VA_STANDARD_DEDUCTION[year] || VA_STANDARD_DEDUCTION["2024"];
        return yearData[status] ?? yearData.single;
      }

      function computeVaTax(taxableIncome) {
        let remaining = Math.max(0, taxableIncome);
        let lastLimit = 0;
        let totalTax = 0;
        const slices = [];

        for (const bracket of VA_BRACKETS) {
          if (remaining <= 0) break;
          const sliceUpper = bracket.upTo;
          const sliceAmount = Math.max(
            0,
            Math.min(remaining, sliceUpper - lastLimit)
          );
          if (sliceAmount > 0) {
            const sliceTax = sliceAmount * bracket.rate;
            totalTax += sliceTax;
            slices.push({
              from: lastLimit,
              to: sliceUpper,
              amount: sliceAmount,
              rate: bracket.rate,
              tax: sliceTax,
            });
            remaining -= sliceAmount;
          }
          lastLimit = sliceUpper;
        }

        return { totalTax, slices };
      }

      function buildBracketTable(slices) {
        if (!slices.length) {
          return '<p class="text-gray-500 text-xs">No Virginia tax owed at this income level.</p>';
        }
        let rows = `
      <table class="min-w-full border border-gray-200 text-xs">
        <thead>
          <tr class="bg-gray-100">
            <th class="border border-gray-200 px-2 py-1 text-left">Taxable slice</th>
            <th class="border border-gray-200 px-2 py-1 text-left">Rate</th>
            <th class="border border-gray-200 px-2 py-1 text-left">Tax on slice</th>
          </tr>
        </thead>
        <tbody>
    `;
        for (const s of slices) {
          const from = s.from;
          const to =
            s.to === Infinity
              ? "and above"
              : "$" +
                s.to.toLocaleString("en-US", { maximumFractionDigits: 0 });
          const rangeLabel =
            from === 0
              ? `Up to ${to}`
              : `$${from.toLocaleString("en-US", {
                  maximumFractionDigits: 0,
                })} – ${to}`;
          rows += `
        <tr>
          <td class="border border-gray-200 px-2 py-1">${rangeLabel}</td>
          <td class="border border-gray-200 px-2 py-1">${formatPercent(
            s.rate
          )}</td>
          <td class="border border-gray-200 px-2 py-1">${formatCurrency(
            s.tax
          )}</td>
        </tr>
      `;
        }
        rows += "</tbody></table>";
        return rows;
      }

      function calculateVirginiaTax() {
        const status = document.getElementById("filingStatus").value;
        const year = document.getElementById("taxYear").value;
        const grossIncome =
          parseFloat(document.getElementById("grossIncome").value) || 0;
        const useStd = document.getElementById("useStandardDeduction").checked;
        const stdDedInput =
          parseFloat(document.getElementById("standardDeduction").value) || 0;
        const itemized =
          parseFloat(document.getElementById("itemizedDeductions").value) || 0;
        const credits =
          parseFloat(document.getElementById("vaCredits").value) || 0;
        const withholding =
          parseFloat(document.getElementById("vaWithholding").value) || 0;
        const federalTax =
          parseFloat(document.getElementById("federalTax").value) || 0;

        const deduction = useStd ? stdDedInput : itemized;
        const taxableIncome = Math.max(0, grossIncome - deduction);

        const { totalTax, slices } = computeVaTax(taxableIncome);
        const taxAfterCredits = Math.max(0, totalTax - credits);

        const effectiveVaRate =
          grossIncome > 0 ? taxAfterCredits / grossIncome : 0;
        const afterVaIncome = grossIncome - taxAfterCredits;
        const combinedEffectiveRate =
          grossIncome > 0 ? (taxAfterCredits + federalTax) / grossIncome : 0;
        const refund = withholding - taxAfterCredits;

        document.getElementById("vaTaxOutput").textContent =
          formatCurrency(taxAfterCredits);
        document.getElementById("vaEffectiveRateOutput").textContent =
          formatPercent(effectiveVaRate);
        document.getElementById("afterVaIncomeOutput").textContent =
          formatCurrency(afterVaIncome);
        document.getElementById("combinedEffectiveRateOutput").textContent =
          formatPercent(combinedEffectiveRate);

        const refundLabel = refund >= 0 ? "Refund: " : "Amount due: ";
        document.getElementById("refundOutput").textContent =
          refundLabel + formatCurrency(Math.abs(refund));

        document.getElementById("bracketTableContainer").innerHTML =
          buildBracketTable(slices);
        document.getElementById("calcStatus").textContent =
          "Updated for " + year + " estimate.";
      }

      function resetVirginiaForm() {
        document.getElementById("filingStatus").value = "single";
        document.getElementById("taxYear").value = "2024";
        document.getElementById("grossIncome").value = 75000;
        document.getElementById("useStandardDeduction").checked = true;
        document.getElementById("itemizedDeductions").value = 0;
        document.getElementById("vaCredits").value = 0;
        document.getElementById("vaWithholding").value = 0;
        document.getElementById("federalTax").value = 0;
        updateStandardDeductionField();
        calculateVirginiaTax();
      }

      function updateStandardDeductionField() {
        const status = document.getElementById("filingStatus").value;
        const year = document.getElementById("taxYear").value;
        const useStd = document.getElementById("useStandardDeduction").checked;
        const stdRow = document.getElementById("standardDeductionRow");
        const itemRow = document.getElementById("itemizedDeductionRow");
        const stdInput = document.getElementById("standardDeduction");

        if (useStd) {
          stdRow.classList.remove("hidden");
          itemRow.classList.add("hidden");
          stdInput.readOnly = false; // allow manual override
          const suggested = getStandardDeduction(year, status);
          if (!stdInput.value || parseFloat(stdInput.value) === 0) {
            stdInput.value = suggested;
          }
        } else {
          stdRow.classList.add("hidden");
          itemRow.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        updateStandardDeductionField();
        calculateVirginiaTax();

        document
          .getElementById("filingStatus")
          .addEventListener("change", () => {
            updateStandardDeductionField();
            calculateVirginiaTax();
          });
        document.getElementById("taxYear").addEventListener("change", () => {
          updateStandardDeductionField();
          calculateVirginiaTax();
        });
        document
          .getElementById("useStandardDeduction")
          .addEventListener("change", () => {
            updateStandardDeductionField();
            calculateVirginiaTax();
          });

        [
          "grossIncome",
          "standardDeduction",
          "itemizedDeductions",
          "vaCredits",
          "vaWithholding",
          "federalTax",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", () => {
              // small debounce via requestAnimationFrame
              window.requestAnimationFrame(calculateVirginiaTax);
            });
          }
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            calculateVirginiaTax();
          });

        document.getElementById("resetBtn").addEventListener("click", (e) => {
          e.preventDefault();
          resetVirginiaForm();
        });
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
