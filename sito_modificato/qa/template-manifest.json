{
  "$schema": "https://example.local/calcdomain/template-manifest.schema.json",
  "version": 1,
  "rootDirs": ["./dist"],
  "defaults": {
    "require": {
      "metaDetails": true,
      "buttons": true
    },
    "optionalFeatures": {
      "schedule": true,
      "csv": true
    },
    "safety": {
      "requireStrictIife": true,
      "requireDebounceIfUpdateExists": true,
      "forbidTokens": ["NaN", "Infinity"]
    },
    "globalIds": [
      "siteHeader",
      "mainContent",
      "pageTitle",
      "pageSub",
      "errorBox",
      "calcHero",
      "inputsCard",
      "resultsCard",
      "howToUse",
      "pageMeta",
      "siteFooter"
    ],
    "globalIdOrder": [
      "siteHeader",
      "mainContent",
      "pageTitle",
      "pageSub",
      "errorBox",
      "calcHero",
      "inputsCard",
      "resultsCard",
      "howToUse",
      "pageMeta",
      "siteFooter"
    ],
    "globalClasses": [
      "container",
      "nav",
      "brand",
      "navRight",
      "pill",
      "calc-hero",
      "card",
      "btn",
      "btnSecondary",
      "alert",
      "meta-section",
      "content-card",
      "sub"
    ]
  },
  "pages": [
    {
      "id": "mortgage-payment",
      "match": {
        "path": "**/mortgage-payment.html"
      },
      "require": {
        "schedule": true,
        "csv": true,
        "metaDetails": true,
        "buttons": true
      },
      "requiredIds": [
        "loanAmount",
        "interestRate",
        "loanTermYears",
        "extraPrincipal",
        "currency",
        "paymentsPerYear",
        "totalMonthly",
        "piMonthly",
        "tiMonthly",
        "totalInterest",
        "payoffTime"
      ],
      "requiredMetaDetailsIds": ["formulaDetails", "citationDetails", "changelogDetails"]
    },

    {
      "id": "simple-percentage",
      "match": {
        "path": "**/percentage-calculator.html"
      },
      "require": {
        "schedule": false,
        "csv": false,
        "metaDetails": true,
        "buttons": false
      },
      "requiredIds": ["percent", "base", "result"]
    }
  ]
}
