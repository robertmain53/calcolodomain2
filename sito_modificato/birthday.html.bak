    <script>
      // Helper: format number with thousands separator
      function formatNumber(n) {
        return n.toLocaleString(undefined);
      }

      function getWesternZodiac(month, day) {
        const signs = [
          { name: "Capricorn", from: [12, 22], to: [1, 19] },
          { name: "Aquarius", from: [1, 20], to: [2, 18] },
          { name: "Pisces", from: [2, 19], to: [3, 20] },
          { name: "Aries", from: [3, 21], to: [4, 19] },
          { name: "Taurus", from: [4, 20], to: [5, 20] },
          { name: "Gemini", from: [5, 21], to: [6, 20] },
          { name: "Cancer", from: [6, 21], to: [7, 22] },
          { name: "Leo", from: [7, 23], to: [8, 22] },
          { name: "Virgo", from: [8, 23], to: [9, 22] },
          { name: "Libra", from: [9, 23], to: [10, 22] },
          { name: "Scorpio", from: [10, 23], to: [11, 21] },
          { name: "Sagittarius", from: [11, 22], to: [12, 21] },
        ];

        for (const sign of signs) {
          const [fm, fd] = sign.from;
          const [tm, td] = sign.to;

          if (fm <= tm) {
            // Range within same year
            if (
              (month > fm || (month === fm && day >= fd)) &&
              (month < tm || (month === tm && day <= td))
            ) {
              return sign.name;
            }
          } else {
            // Range wraps year end (e.g., Capricorn)
            if (
              month > fm ||
              (month === fm && day >= fd) ||
              month < tm ||
              (month === tm && day <= td)
            ) {
              return sign.name;
            }
          }
        }
        return "";
      }

      function getChineseZodiac(year) {
        const animals = [
          "Rat",
          "Ox",
          "Tiger",
          "Rabbit",
          "Dragon",
          "Snake",
          "Horse",
          "Goat",
          "Monkey",
          "Rooster",
          "Dog",
          "Pig",
        ];
        const index = (year - 1900) % 12;
        return animals[(index + 12) % 12];
      }

      function daysBetween(d1, d2) {
        const msPerDay = 24 * 60 * 60 * 1000;
        const utc1 = Date.UTC(d1.getFullYear(), d1.getMonth(), d1.getDate());
        const utc2 = Date.UTC(d2.getFullYear(), d2.getMonth(), d2.getDate());
        return Math.floor((utc2 - utc1) / msPerDay);
      }

      function calcAgeYMD(birth, ref) {
        let y = ref.getFullYear() - birth.getFullYear();
        let m = ref.getMonth() - birth.getMonth();
        let d = ref.getDate() - birth.getDate();

        if (d < 0) {
          m -= 1;
          const prevMonth = new Date(ref.getFullYear(), ref.getMonth(), 0);
          d += prevMonth.getDate();
        }
        if (m < 0) {
          y -= 1;
          m += 12;
        }
        return { years: y, months: m, days: d };
      }

      function getNextBirthday(birth, ref) {
        const birthMonth = birth.getMonth();
        const birthDay = birth.getDate();
        let year = ref.getFullYear();

        // Handle Feb 29 birthdays: use Feb 29 in leap years, Feb 28 otherwise
        let targetMonth = birthMonth;
        let targetDay = birthDay;
        if (birthMonth === 1 && birthDay === 29) {
          const isLeap = (y) => (y % 4 === 0 && y % 100 !== 0) || y % 400 === 0;
          if (!isLeap(year)) {
            targetDay = 28;
          }
        }

        let next = new Date(year, targetMonth, targetDay);
        if (daysBetween(ref, next) < 0) {
          year += 1;
          targetDay = birthDay;
          if (birthMonth === 1 && birthDay === 29) {
            const isLeap = (y) =>
              (y % 4 === 0 && y % 100 !== 0) || y % 400 === 0;
            if (!isLeap(year)) {
              targetDay = 28;
            }
          }
          next = new Date(year, birthMonth, targetDay);
        }
        return next;
      }

      function onCalculate() {
        const dobInput = document.getElementById("dob");
        const refInput = document.getElementById("refDate");
        const errorMsg = document.getElementById("errorMsg");
        const results = document.getElementById("resultsContainer");

        errorMsg.textContent = "";
        results.classList.add("hidden");

        if (!dobInput.value) {
          errorMsg.textContent = "Please enter your date of birth.";
          return;
        }

        const birth = new Date(dobInput.value + "T00:00:00");
        if (isNaN(birth.getTime())) {
          errorMsg.textContent = "Invalid date of birth.";
          return;
        }

        let ref;
        if (refInput.value) {
          ref = new Date(refInput.value + "T00:00:00");
          if (isNaN(ref.getTime())) {
            errorMsg.textContent = "Invalid reference date.";
            return;
          }
        } else {
          const today = new Date();
          ref = new Date(
            today.getFullYear(),
            today.getMonth(),
            today.getDate()
          );
        }

        if (daysBetween(birth, ref) < 0) {
          errorMsg.textContent =
            "Reference date must be on or after your birth date.";
          return;
        }

        // Age YMD
        const ageYMD = calcAgeYMD(birth, ref);

        // Age in days/hours/minutes
        const totalDays = daysBetween(birth, ref);
        const totalHours = totalDays * 24;
        const totalMinutes = totalHours * 60;

        // Birth weekday
        const weekdayNames = [
          "Sunday",
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday",
          "Saturday",
        ];
        const birthWeekday = weekdayNames[birth.getDay()];

        // Next birthday
        const nextBday = getNextBirthday(birth, ref);
        const daysUntil = daysBetween(ref, nextBday);
        const nextWeekday = weekdayNames[nextBday.getDay()];

        // Birthdays count (how many birthdays have passed by ref date)
        let birthdaysCount = ageYMD.years;
        // If ref date is exactly on birthday, that birthday is already counted
        // ageYMD.years already reflects that, so no extra adjustment needed.

        // Zodiac
        const western = getWesternZodiac(birth.getMonth() + 1, birth.getDate());
        const chinese = getChineseZodiac(birth.getFullYear());

        // Populate UI
        document.getElementById("ageExact").textContent =
          `${ageYMD.years} year${ageYMD.years !== 1 ? "s" : ""}, ` +
          `${ageYMD.months} month${ageYMD.months !== 1 ? "s" : ""}, ` +
          `${ageYMD.days} day${ageYMD.days !== 1 ? "s" : ""}`;

        document.getElementById("ageYears").textContent =
          ageYMD.years.toString();
        document.getElementById("ageDays").textContent =
          formatNumber(totalDays);
        document.getElementById("ageHours").textContent =
          formatNumber(totalHours);
        document.getElementById("ageMinutes").textContent =
          formatNumber(totalMinutes);
        document.getElementById("birthWeekday").textContent = birthWeekday;

        document.getElementById("nextBirthday").textContent =
          nextBday.toLocaleDateString(undefined, {
            year: "numeric",
            month: "long",
            day: "numeric",
          });
        document.getElementById("nextBirthdayWeekday").textContent =
          nextWeekday;
        document.getElementById("daysUntilNext").textContent =
          daysUntil.toString();

        document.getElementById("westernZodiac").textContent = western;
        document.getElementById("chineseZodiac").textContent = chinese;
        document.getElementById("birthdaysCount").textContent =
          birthdaysCount.toString();

        results.classList.remove("hidden");
      }

      function onReset() {
        document.getElementById("dob").value = "";
        document.getElementById("refDate").value = "";
        document.getElementById("errorMsg").textContent = "";
        document.getElementById("resultsContainer").classList.add("hidden");
      }

      document.addEventListener("DOMContentLoaded", function () {
        const today = new Date();
        const refInput = document.getElementById("refDate");
        if (refInput) {
          refInput.valueAsDate = today;
        }

        document
          .getElementById("calcBtn")
          .addEventListener("click", onCalculate);
        document.getElementById("resetBtn").addEventListener("click", onReset);
      });
    </script>

