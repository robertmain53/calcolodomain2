    ],
    kids: [
      { INT: "2Y", US: "2T", UK: "2-3", EU: "92", height: 92 },
      { INT: "3Y", US: "3T", UK: "3-4", EU: "98", height: 98 },
      { INT: "4Y", US: "4T", UK: "4-5", EU: "104", height: 104 },
      { INT: "5Y", US: "5",  UK: "5-6", EU: "110", height: 110 },
      { INT: "6Y", US: "6",  UK: "6-7", EU: "116", height: 116 },
      { INT: "8Y", US: "8",  UK: "8-9", EU: "128", height: 128 }
    ]
  };

  const categorySelect = document.getElementById('category');
  const regionSelect = document.getElementById('genderRegion');
  const sizeInput = document.getElementById('sizeInput');
  const quickSizesDiv = document.getElementById('quickSizes');
  const convertBtn = document.getElementById('convertBtn');
  const resultContainer = document.getElementById('resultContainer');
  const resultHeaderRow = document.getElementById('resultHeaderRow');
  const resultValueRow = document.getElementById('resultValueRow');
  const resultMeasureRow = document.getElementById('resultMeasureRow');
  const fitNote = document.getElementById('fitNote');
  const errorMsg = document.getElementById('errorMsg');

  function getCurrentDataset() {
    return sizeData[categorySelect.value];
  }

  function getRegionKeysForCategory(cat) {
    if (cat === 'women_shoes' || cat === 'men_shoes') {
      return ['US', 'UK', 'EU', 'JP'];
    }
    if (cat === 'kids') {
      return ['INT', 'US', 'UK', 'EU'];
    }
    return ['INT', 'US', 'UK', 'EU', 'IT', 'FR'];
  }

  function getMeasurementLabel(cat) {
    if (cat === 'women_tops') return 'Bust (cm)';
    if (cat === 'women_bottoms') return 'Waist / Hip (cm)';
    if (cat === 'men_tops' || cat === 'men_suits') return 'Chest (cm)';
    if (cat === 'men_bottoms') return 'Waist / Hip (cm)';
    if (cat === 'women_shoes' || cat === 'men_shoes') return 'Foot length (cm)';
    if (cat === 'kids') return 'Height (cm)';
    return 'Measurement';
  }

  function buildQuickSizes() {
    quickSizesDiv.innerHTML = '';
    const data = getCurrentDataset();
    if (!data) return;
    const region = regionSelect.value;
    const regionKeys = getRegionKeysForCategory(categorySelect.value);

    const key = regionKeys.includes(region) ? region : regionKeys[0];

    const uniqueSizes = [...new Set(data.map(row => row[key]).filter(Boolean))];
    uniqueSizes.slice(0, 18).forEach(size => {
      const btn = document.createElement('button');
      btn.type = 'button';
      btn.className = 'size-pill border-gray-300 text-gray-700 hover:bg-blue-50 hover:border-blue-400';
      btn.textContent = size;
      btn.addEventListener('click', () => {
        sizeInput.value = size;
      });
      quickSizesDiv.appendChild(btn);
    });
  }

  function normalizeSizeString(str) {
    return String(str).trim().toLowerCase().replace(/\s+/g, '');
  }

  function findBestMatch(data, regionKey, sizeStr) {
    const target = normalizeSizeString(sizeStr);
    let exact = data.find(row => normalizeSizeString(row[regionKey]) === target);
    if (exact) return exact;

    // Try contains (for ranges like 4-6)
    exact = data.find(row => {
      const val = String(row[regionKey] || '').toLowerCase();
      return val.includes(target) || target.includes(val.replace(/\s+/g, ''));
    });
    if (exact) return exact;

    // For numeric shoe sizes, approximate
    const num = parseFloat(sizeStr);
    if (!isNaN(num)) {
      let best = null;
      let bestDiff = Infinity;
      data.forEach(row => {
        const v = parseFloat(String(row[regionKey]).replace(/[^\d.]/g, ''));
        if (!isNaN(v)) {
          const diff = Math.abs(v - num);
          if (diff < bestDiff) {
            bestDiff = diff;
            best = row;
          }
        }
      });
      return best;
    }

    return null;
  }

  function handleConvert() {
    errorMsg.classList.add('hidden');
    resultContainer.classList.add('hidden');

    const data = getCurrentDataset();
    if (!data) return;

    const region = regionSelect.value;
    const regionKeys = getRegionKeysForCategory(categorySelect.value);
    const regionKey = regionKeys.includes(region) ? region : regionKeys[0];
    const sizeStr = sizeInput.value.trim();

    if (!sizeStr) {
      errorMsg.textContent = 'Please enter your current size or pick one from the quick list.';
      errorMsg.classList.remove('hidden');
      return;
    }

    const match = findBestMatch(data, regionKey, sizeStr);
    if (!match) {
      errorMsg.textContent = 'No close match found for that size in this category. Try a nearby size or check the reference tables below.';
      errorMsg.classList.remove('hidden');
      return;
    }

    // Build result table
    resultHeaderRow.innerHTML = '';
    resultValueRow.innerHTML = '';
    resultMeasureRow.innerHTML = '';

    regionKeys.forEach(key => {
      const th = document.createElement('th');
      th.className = 'px-2 py-1 border text-xs font-semibold';
      th.textContent = key;
      resultHeaderRow.appendChild(th);

      const td = document.createElement('td');
      td.className = 'px-2 py-1 border text-sm';
      td.textContent = match[key] || '—';
      if (key === regionKey) {
        td.classList.add('bg-blue-50', 'font-semibold');
      }
      resultValueRow.appendChild(td);

      const tdM = document.createElement('td');
      tdM.className = 'px-2 py-1 border text-xs text-gray-500';
      tdM.textContent = '';
      resultMeasureRow.appendChild(tdM);
    });

    // Add measurement row content
    const cat = categorySelect.value;
    const measLabel = getMeasurementLabel(cat);
    let measValue = '';

    if (cat === 'women_tops') measValue = match.bust ? match.bust + ' cm bust' : '';
    else if (cat === 'women_bottoms') measValue = (match.waist && match.hip) ? `${match.waist} cm waist / ${match.hip} cm hip` : '';
    else if (cat === 'men_tops' || cat === 'men_suits') measValue = match.chest ? match.chest + ' cm chest' : '';
    else if (cat === 'men_bottoms') measValue = (match.waist && match.hip) ? `${match.waist} cm waist / ${match.hip} cm hip` : '';
    else if (cat === 'women_shoes' || cat === 'men_shoes') measValue = match.foot ? match.foot + ' cm foot length' : '';
    else if (cat === 'kids') measValue = match.height ? match.height + ' cm height' : '';

    if (measValue) {
      const th = document.createElement('th');
      th.className = 'px-2 py-1 border text-xs font-semibold bg-gray-100';
      th.colSpan = regionKeys.length;
      th.textContent = measLabel + ': ' + measValue;
      resultMeasureRow.innerHTML = '';
      resultMeasureRow.appendChild(th);
    }

    fitNote.textContent = 'Note: Conversions are approximate. For the best fit, compare your body measurements to the brand’s own size chart and consider the intended fit (slim, regular, relaxed).';
    resultContainer.classList.remove('hidden');
  }

  function populateReferenceTables() {
    const wT = document.getElementById('table-women-tops');
    const mT = document.getElementById('table-men-tops');
    const shoesT = document.getElementById('table-shoes');

    sizeData.women_tops.forEach(row => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class="px-2 py-1 border text-center">${row.INT}</td>
        <td class="px-2 py-1 border text-center">${row.US}</td>
        <td class="px-2 py-1 border text-center">${row.UK}</td>
        <td class="px-2 py-1 border text-center">${row.EU}</td>
        <td class="px-2 py-1 border text-center">${row.IT}</td>
        <td class="px-2 py-1 border text-center">${row.FR}</td>
        <td class="px-2 py-1 border text-center">${row.bust}</td>
      `;
      wT.appendChild(tr);
    });

    sizeData.men_tops.forEach(row => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class="px-2 py-1 border text-center">${row.INT}</td>
        <td class="px-2 py-1 border text-center">${row.US}</td>
        <td class="px-2 py-1 border text-center">${row.UK}</td>
        <td class="px-2 py-1 border text-center">${row.EU}</td>
        <td class="px-2 py-1 border text-center">${row.chest}</td>
      `;
      mT.appendChild(tr);
    });

    sizeData.women_shoes.forEach(row => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class="px-2 py-1 border text-center">${row.gender}</td>
        <td class="px-2 py-1 border text-center">${row.US}</td>
        <td class="px-2 py-1 border text-center">${row.UK}</td>
        <td class="px-2 py-1 border text-center">${row.EU}</td>
        <td class="px-2 py-1 border text-center">${row.JP}</td>
        <td class="px-2 py-1 border text-center">${row.foot}</td>
      `;
      shoesT.appendChild(tr);
    });
    sizeData.men_shoes.forEach(row => {
      const tr = document.createElement('tr');
      tr.innerHTML = `
        <td class="px-2 py-1 border text-center">${row.gender}</td>
        <td class="px-2 py-1 border text-center">${row.US}</td>
        <td class="px-2 py-1 border text-center">${row.UK}</td>
        <td class="px-2 py-1 border text-center">${row.EU}</td>
        <td class="px-2 py-1 border text-center">${row.JP}</td>
        <td class="px-2 py-1 border text-center">${row.foot}</td>
      `;
      shoesT.appendChild(tr);
    });
  }

  categorySelect.addEventListener('change', () => {
    buildQuickSizes();
    resultContainer.classList.add('hidden');
    errorMsg.classList.add('hidden');
  });
  regionSelect.addEventListener('change', () => {
    buildQuickSizes();
    resultContainer.classList.add('hidden');
    errorMsg.classList.add('hidden');
  });
  convertBtn.addEventListener('click', handleConvert);

  document.addEventListener('DOMContentLoaded', () => {
    populateReferenceTables();
    buildQuickSizes();
  });

  // MathJax config
  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
