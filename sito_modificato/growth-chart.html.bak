      };

      function interpolateLMS(std, sex, chart, ageMonths) {
        // Find nearest lower and upper ages in table and linearly interpolate
        const keys = Object.keys(growthRef)
          .filter((k) => {
            const [s, sx, ch, age] = k.split("|");
            return s === std && sx === sex && ch === chart;
          })
          .map((k) => {
            const parts = k.split("|");
            return { age: parseInt(parts[3], 10), key: k };
          })
          .sort((a, b) => a.age - b.age);

        if (keys.length === 0) return null;

        if (ageMonths <= keys[0].age) return growthRef[keys[0].key];
        if (ageMonths >= keys[keys.length - 1].age)
          return growthRef[keys[keys.length - 1].key];

        let lower = keys[0],
          upper = keys[keys.length - 1];
        for (let i = 0; i < keys.length - 1; i++) {
          if (ageMonths >= keys[i].age && ageMonths <= keys[i + 1].age) {
            lower = keys[i];
            upper = keys[i + 1];
            break;
          }
        }
        const t = (ageMonths - lower.age) / (upper.age - lower.age);
        const L1 = growthRef[lower.key].L,
          M1 = growthRef[lower.key].M,
          S1 = growthRef[lower.key].S;
        const L2 = growthRef[upper.key].L,
          M2 = growthRef[upper.key].M,
          S2 = growthRef[upper.key].S;
        return {
          L: L1 + t * (L2 - L1),
          M: M1 + t * (M2 - M1),
          S: S1 + t * (S2 - S1),
        };
      }

      function computeZScore(measure, std, sex, chart, ageMonths) {
        const lms = interpolateLMS(std, sex, chart, ageMonths);
        if (!lms || !measure || measure <= 0) return null;
        const L = lms.L,
          M = lms.M,
          S = lms.S;
        let z;
        if (Math.abs(L) < 1e-6) {
          z = Math.log(measure / M) / S;
        } else {
          z = (Math.pow(measure / M, L) - 1) / (L * S);
        }
        return z;
      }

      function zToPercentile(z) {
        const p = normalCdf(z);
        return p * 100;
      }

      function formatPercentile(p) {
        if (!isFinite(p)) return "N/A";
        const rounded = Math.round(p * 10) / 10;
        return rounded.toFixed(1) + "th percentile";
      }

      function interpretZ(z, chartType) {
        if (z === null || !isFinite(z)) return "";
        const abs = Math.abs(z);
        let range;
        if (abs < 1) range = "within the typical range for age and sex.";
        else if (abs < 2)
          range =
            "slightly outside the average range but often still normal, especially if consistent over time.";
        else
          range =
            "well outside the typical range and should be discussed with a pediatrician.";

        let label;
        if (z < -2) label = "below the expected range";
        else if (z < -1) label = "on the lower side of the expected range";
        else if (z <= 1) label = "around the expected range";
        else if (z <= 2) label = "on the higher side of the expected range";
        else label = "above the expected range";

        const chartLabelMap = {
          wfa: "weight-for-age",
          lfa: "length/height-for-age",
          bfa: "BMI-for-age",
          hcfa: "head circumference-for-age",
        };
        const chartLabel = chartLabelMap[chartType] || "growth";

        return `This result suggests your child’s ${chartLabel} is ${label}. Patterns over time matter more than a single measurement; always discuss concerns with your child’s health professional.`;
      }

      function ageToMonths(years, months, days) {
        years = Number(years) || 0;
        months = Number(months) || 0;
        days = Number(days) || 0;
        return years * 12 + months + days / 30.4375;
      }

      function autoStandard(ageMonths, selected) {
        if (selected === "who" || selected === "cdc") return selected;
        // auto
        if (ageMonths < 24) return "who";
        if (ageMonths >= 24 && ageMonths <= 240) return "cdc";
        return "cdc";
      }

      function updateChartMarker(percentile) {
        const marker = document.getElementById("chart-marker");
        const label = document.getElementById("chart-marker-label");
        if (!isFinite(percentile)) {
          marker.classList.add("hidden");
          label.textContent = "";
          return;
        }
        let pos = percentile;
        if (pos < 0) pos = 0;
        if (pos > 100) pos = 100;
        marker.style.left = `calc(${pos}% - 6px)`;
        marker.classList.remove("hidden");
        label.textContent = `Marker position: approximately the ${formatPercentile(
          percentile
        )}.`;
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Measurement tabs
        document.querySelectorAll("[data-measure-tab]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.getAttribute("data-measure-tab");
            document
              .querySelectorAll("[data-measure-tab]")
              .forEach((b) => b.classList.remove("tab-active"));
            btn.classList.add("tab-active");
            document
              .querySelectorAll("[data-measure-panel]")
              .forEach((panel) => {
                panel.classList.toggle(
                  "hidden",
                  panel.getAttribute("data-measure-panel") !== target
                );
              });
            // Sync chart type
            const chartSelect = document.getElementById("chart-type");
            if (target === "weight") chartSelect.value = "wfa";
            else if (target === "length") chartSelect.value = "lfa";
            else if (target === "bmi") chartSelect.value = "bfa";
            else if (target === "head") chartSelect.value = "hcfa";
          });
        });

        const calcBtn = document.getElementById("calculate-btn");
        const addTrackBtn = document.getElementById("add-track-btn");
        const clearTrackBtn = document.getElementById("clear-track-btn");
        const errorEl = document.getElementById("calc-error");

        let lastResult = null;

        calcBtn.addEventListener("click", () => {
          errorEl.textContent = "";
          const sex = document.getElementById("sex").value;
          const ageYears = document.getElementById("age-years").value;
          const ageMonthsVal = document.getElementById("age-months").value;
          const ageDays = document.getElementById("age-days").value;
          const ageMonthsTotal = ageToMonths(ageYears, ageMonthsVal, ageDays);
          const chartType = document.getElementById("chart-type").value;
          const standardSel = document.getElementById("standard").value;
          const std = autoStandard(ageMonthsTotal, standardSel);

          if (ageMonthsTotal < 0 || ageMonthsTotal > 240) {
            errorEl.textContent = "Age must be between 0 and 20 years.";
            return;
          }

          let measureValue = null;
          let measureLabel = "";
          if (chartType === "wfa") {
            let w = parseFloat(document.getElementById("weight").value);
            const unit = document.getElementById("weight-unit").value;
            if (!w || w <= 0) {
              errorEl.textContent = "Please enter a valid weight.";
              return;
            }
            if (unit === "lb") w = w * 0.45359237;
            measureValue = w;
            measureLabel = `${document.getElementById("weight").value} ${unit}`;
          } else if (chartType === "lfa") {
            let h = parseFloat(document.getElementById("length").value);
            const unit = document.getElementById("length-unit").value;
            if (!h || h <= 0) {
              errorEl.textContent = "Please enter a valid length/height.";
              return;
            }
            if (unit === "in") h = h * 2.54;
            measureValue = h;
            measureLabel = `${document.getElementById("length").value} ${unit}`;
          } else if (chartType === "bfa") {
            let bmi = parseFloat(document.getElementById("bmi").value);
            if (!bmi || bmi <= 0) {
              // Try to compute from weight & height
              let w = parseFloat(document.getElementById("weight").value);
              let h = parseFloat(document.getElementById("length").value);
              const wUnit = document.getElementById("weight-unit").value;
              const hUnit = document.getElementById("length-unit").value;
              if (!w || !h || w <= 0 || h <= 0) {
                errorEl.textContent =
                  "Enter BMI directly or provide both weight and height.";
                return;
              }
              if (wUnit === "lb") w = w * 0.45359237;
              if (hUnit === "in") h = h * 2.54;
              const hMeters = h / 100;
              bmi = w / (hMeters * hMeters);
            }
            measureValue = bmi;
            measureLabel = `${measureValue.toFixed(1)} kg/m²`;
          } else if (chartType === "hcfa") {
            let hc = parseFloat(document.getElementById("head").value);
            const unit = document.getElementById("head-unit").value;
            if (!hc || hc <= 0) {
              errorEl.textContent = "Please enter a valid head circumference.";
              return;
            }
            if (unit === "in") hc = hc * 2.54;
            measureValue = hc;
            measureLabel = `${document.getElementById("head").value} ${unit}`;
          }

          const z = computeZScore(
            measureValue,
            std,
            sex,
            chartType,
            ageMonthsTotal
          );
          if (z === null || !isFinite(z)) {
            errorEl.textContent =
              "This age/measurement combination is outside the supported range of the internal reference table.";
            return;
          }
          const p = zToPercentile(z);

          // Update summary
          const resBox = document.getElementById("results-summary");
          resBox.classList.remove("hidden");
          document.getElementById("results-age-label").textContent = `Age: ${
            ageYears || 0
          } years, ${ageMonthsVal || 0} months`;
          document.getElementById("results-sex-label").textContent = `Sex: ${
            sex === "M" ? "Male" : "Female"
          }`;
          const stdLabel =
            std === "who" ? "WHO Child Growth Standards" : "CDC Growth Charts";
          document.getElementById("results-standard-label").textContent =
            stdLabel;

          const chartLabelMap = {
            wfa: "Weight-for-age",
            lfa: "Length/Height-for-age",
            bfa: "BMI-for-age",
            hcfa: "Head circumference-for-age",
          };
          document.getElementById("results-chart-label").textContent =
            chartLabelMap[chartType] || "";

          document.getElementById("results-measurement").textContent =
            measureLabel;
          document.getElementById("results-percentile").textContent =
            formatPercentile(p);
          document.getElementById("results-zscore").textContent = z.toFixed(2);
          document.getElementById("results-interpretation").textContent =
            interpretZ(z, chartType);

          updateChartMarker(p);

          lastResult = {
            ageYears: ageYears || 0,
            ageMonths: ageMonthsVal || 0,
            sex,
            chartType,
            measureLabel,
            percentile: p,
            z,
            standard: stdLabel,
          };
          addTrackBtn.disabled = false;
        });

        addTrackBtn.addEventListener("click", () => {
          if (!lastResult) return;
          const tbody = document.getElementById("tracking-body");
          const emptyRow = document.getElementById("tracking-empty-row");
          if (emptyRow) emptyRow.remove();
          const rowCount = tbody.querySelectorAll("tr").length + 1;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b border-gray-100">${rowCount}</td>
        <td class="px-2 py-1 border-b border-gray-100">${
          lastResult.ageYears
        }y ${lastResult.ageMonths}m</td>
        <td class="px-2 py-1 border-b border-gray-100">${lastResult.sex}</td>
        <td class="px-2 py-1 border-b border-gray-100">${
          lastResult.chartType
        }</td>
        <td class="px-2 py-1 border-b border-gray-100">${
          lastResult.measureLabel
        }</td>
        <td class="px-2 py-1 border-b border-gray-100">${formatPercentile(
          lastResult.percentile
        )}</td>
        <td class="px-2 py-1 border-b border-gray-100">${lastResult.z.toFixed(
          2
        )}</td>
        <td class="px-2 py-1 border-b border-gray-100">${
          lastResult.standard
        }</td>
      `;
          tbody.appendChild(tr);
          clearTrackBtn.classList.remove("hidden");
        });

        clearTrackBtn.addEventListener("click", () => {
          const tbody = document.getElementById("tracking-body");
          tbody.innerHTML = `
        <tr id="tracking-empty-row">
          <td colspan="8" class="px-3 py-3 text-center text-gray-400">No entries yet. Calculate a result and click “Add to tracking table”.</td>
        </tr>
      `;
          clearTrackBtn.classList.add("hidden");
        });

        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((icon) => (icon.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                btn.querySelector("span:last-child").textContent = "−";
              }
            });
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
