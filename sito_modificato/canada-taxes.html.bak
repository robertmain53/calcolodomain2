        NU: [
          { upTo: 50197, rate: 0.04 },
          { upTo: 100392, rate: 0.07 },
          { upTo: 163533, rate: 0.09 },
          { upTo: Infinity, rate: 0.115 },
        ],
      };

      const BASIC_PERSONAL_AMOUNT_FED = 15000; // approx
      const BASIC_PERSONAL_AMOUNT_PROV = 11000; // generic approx
      const SPOUSAL_CREDIT_BASE = 8000;
      const CHILD_CREDIT_BASE = 2500;

      const CPP_RATE = 0.0595;
      const CPP_YMPE = 68500;
      const CPP_BASIC_EXEMPT = 3500;
      const EI_RATE = 0.0163;
      const EI_MAX_INSURABLE = 61500;

      function calcProgressiveTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        let marginalRate = 0;

        for (const b of brackets) {
          if (remaining <= 0) break;
          const bandIncome = Math.min(remaining, b.upTo - lastLimit);
          tax += bandIncome * b.rate;
          remaining -= bandIncome;
          lastLimit = b.upTo;
          if (remaining <= 0) {
            marginalRate = b.rate;
            break;
          }
        }
        return { tax, marginalRate };
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function calculateCanadaTaxes(
        provinceCode,
        income,
        otherIncome,
        rrsp,
        otherDeductions,
        filingStatus,
        children,
        includeCppEi
      ) {
        const grossIncome = income + otherIncome;
        const deductions = rrsp + otherDeductions;
        const taxableIncome = Math.max(0, grossIncome - deductions);

        const fed = calcProgressiveTax(taxableIncome, FEDERAL_BRACKETS);
        const provBrackets =
          PROVINCIAL_BRACKETS[provinceCode] || PROVINCIAL_BRACKETS["ON"];
        const prov = calcProgressiveTax(taxableIncome, provBrackets);

        // Simplified credits
        const baseCredit =
          BASIC_PERSONAL_AMOUNT_FED + BASIC_PERSONAL_AMOUNT_PROV;
        const spouseCredit =
          filingStatus === "married" ? SPOUSAL_CREDIT_BASE : 0;
        const childCredit = children > 0 ? children * CHILD_CREDIT_BASE : 0;
        const totalCreditBase = baseCredit + spouseCredit + childCredit;

        const lowestFedRate = FEDERAL_BRACKETS[0].rate;
        const lowestProvRate = provBrackets[0].rate;

        const fedCredit = totalCreditBase * lowestFedRate;
        const provCredit = totalCreditBase * lowestProvRate;

        let federalTax = Math.max(0, fed.tax - fedCredit);
        let provincialTax = Math.max(0, prov.tax - provCredit);

        let cpp = 0;
        let ei = 0;
        if (includeCppEi) {
          const pensionable = Math.max(
            0,
            Math.min(income, CPP_YMPE) - CPP_BASIC_EXEMPT
          );
          cpp = Math.max(0, pensionable * CPP_RATE);
          const insurable = Math.min(income, EI_MAX_INSURABLE);
          ei = insurable * EI_RATE;
        }

        const totalTax = federalTax + provincialTax;
        const totalBurden = totalTax + cpp + ei;
        const netIncome = grossIncome - totalBurden;

        const avgRate = grossIncome > 0 ? totalTax / grossIncome : 0;
        const totalBurdenRate = grossIncome > 0 ? totalBurden / grossIncome : 0;
        const marginalRate = fed.marginalRate + prov.marginalRate;

        return {
          grossIncome,
          taxableIncome,
          federalTax,
          provincialTax,
          cpp,
          ei,
          totalTax,
          totalBurden,
          netIncome,
          avgRate,
          totalBurdenRate,
          marginalRate,
          credits: fedCredit + provCredit,
        };
      }

      function updateResults(res) {
        document.getElementById("res-gross-income").textContent =
          formatCurrency(res.grossIncome);
        document.getElementById("res-total-tax").textContent = formatCurrency(
          res.totalTax
        );
        document.getElementById("res-cpp-ei").textContent = formatCurrency(
          res.cpp + res.ei
        );
        document.getElementById("res-net-income").textContent = formatCurrency(
          res.netIncome
        );

        document.getElementById("res-avg-rate").textContent = formatPercent(
          res.avgRate
        );
        document.getElementById("res-marginal-rate").textContent =
          formatPercent(res.marginalRate);
        document.getElementById("res-total-burden").textContent = formatPercent(
          res.totalBurdenRate
        );

        document.getElementById("res-federal-tax").textContent = formatCurrency(
          res.federalTax
        );
        document.getElementById("res-provincial-tax").textContent =
          formatCurrency(res.provincialTax);
        document.getElementById("res-credits").textContent =
          "-" + formatCurrency(res.credits);
      }

      function handleCalculate() {
        const province = document.getElementById("province").value;
        const income = parseFloat(document.getElementById("income").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("other-income").value) || 0;
        const rrsp = parseFloat(document.getElementById("rrsp").value) || 0;
        const otherDeductions =
          parseFloat(document.getElementById("other-deductions").value) || 0;
        const filingStatus = document.getElementById("filing-status").value;
        const children =
          parseInt(document.getElementById("children").value, 10) || 0;
        const includeCppEi = document.getElementById("include-cpp-ei").checked;

        const res = calculateCanadaTaxes(
          province,
          income,
          otherIncome,
          rrsp,
          otherDeductions,
          filingStatus,
          children,
          includeCppEi
        );
        updateResults(res);
      }

      function handleCompare() {
        const baseProvince = document.getElementById("province").value;
        const compareProvince =
          document.getElementById("compare-province").value;
        const income = parseFloat(document.getElementById("income").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("other-income").value) || 0;
        const rrsp = parseFloat(document.getElementById("rrsp").value) || 0;
        const otherDeductions =
          parseFloat(document.getElementById("other-deductions").value) || 0;
        const filingStatus = document.getElementById("filing-status").value;
        const children =
          parseInt(document.getElementById("children").value, 10) || 0;
        const includeCppEi = document.getElementById("include-cpp-ei").checked;

        const baseRes = calculateCanadaTaxes(
          baseProvince,
          income,
          otherIncome,
          rrsp,
          otherDeductions,
          filingStatus,
          children,
          includeCppEi
        );
        const compRes = calculateCanadaTaxes(
          compareProvince,
          income,
          otherIncome,
          rrsp,
          otherDeductions,
          filingStatus,
          children,
          includeCppEi
        );

        const provinceNames = {
          ON: "Ontario",
          QC: "Quebec",
          BC: "British Columbia",
          AB: "Alberta",
          MB: "Manitoba",
          SK: "Saskatchewan",
          NS: "Nova Scotia",
          NB: "New Brunswick",
          NL: "Newfoundland and Labrador",
          PE: "Prince Edward Island",
          YT: "Yukon",
          NT: "Northwest Territories",
          NU: "Nunavut",
        };

        const diffNet = compRes.netIncome - baseRes.netIncome;
        const diffText = diffNet >= 0 ? "more" : "less";

        const html = `
      <p><strong>${
        provinceNames[baseProvince] || baseProvince
      }</strong> net: ${formatCurrency(baseRes.netIncome)}</p>
      <p><strong>${
        provinceNames[compareProvince] || compareProvince
      }</strong> net: ${formatCurrency(compRes.netIncome)}</p>
      <p class="mt-1">That is <strong>${formatCurrency(
        Math.abs(diffNet)
      )}</strong> ${diffText} take‑home pay in ${
          provinceNames[compareProvince] || compareProvince
        } for the same income.</p>
    `;
        document.getElementById("compare-results").innerHTML = html;
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", handleCalculate);
        document
          .getElementById("compare-btn")
          .addEventListener("click", handleCompare);
        handleCalculate();
      });

