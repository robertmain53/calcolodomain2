    <script>
      // --- Tax data (simplified, approximate) ---
      const TAX_DATA = {
        2024: {
          federalBrackets: [
            { upTo: 55867, rate: 0.15 },
            { upTo: 111733, rate: 0.205 },
            { upTo: 173205, rate: 0.26 },
            { upTo: 246752, rate: 0.29 },
            { upTo: Infinity, rate: 0.33 },
          ],
          abBrackets: [
            { upTo: 148269, rate: 0.1 },
            { upTo: 177922, rate: 0.12 },
            { upTo: 237230, rate: 0.13 },
            { upTo: 355845, rate: 0.14 },
            { upTo: Infinity, rate: 0.15 },
          ],
          cppRate: 0.0595,
          cppBasicExemption: 3500,
          cppMaxPensionable: 68500,
          eiRate: 0.0166,
          eiMaxInsurable: 63100,
        },
        2025: {
          // Provisional 2025 values – adjust as official numbers are released
          federalBrackets: [
            { upTo: 57500, rate: 0.15 },
            { upTo: 115000, rate: 0.205 },
            { upTo: 178000, rate: 0.26 },
            { upTo: 252000, rate: 0.29 },
            { upTo: Infinity, rate: 0.33 },
          ],
          abBrackets: [
            { upTo: 152000, rate: 0.1 },
            { upTo: 181000, rate: 0.12 },
            { upTo: 241000, rate: 0.13 },
            { upTo: 361000, rate: 0.14 },
            { upTo: Infinity, rate: 0.15 },
          ],
          cppRate: 0.06,
          cppBasicExemption: 3500,
          cppMaxPensionable: 70500,
          eiRate: 0.017,
          eiMaxInsurable: 65000,
        },
      };

      function applyBrackets(income, brackets) {
        let tax = 0;
        let remaining = income;
        let lastLimit = 0;
        let marginalRate = 0;

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(bracket.upTo - lastLimit, remaining);
          tax += span * bracket.rate;
          remaining -= span;
          lastLimit = bracket.upTo;
          if (remaining <= 0) {
            marginalRate = bracket.rate;
            break;
          }
        }
        return { tax, marginalRate };
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatCurrency2(value) {
        if (!isFinite(value)) return "$0.00";
        return value.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 2,
        });
      }

      function getPayPeriods(freq) {
        switch (freq) {
          case "monthly":
            return 12;
          case "biweekly":
            return 26;
          case "weekly":
            return 52;
          default:
            return 1;
        }
      }

      function calculateAlbertaTax() {
        const year = document.getElementById("tax-year").value;
        const data = TAX_DATA[year];

        const incomeType = document.querySelector(
          'input[name="income-type"]:checked'
        ).value;
        const grossInput =
          parseFloat(document.getElementById("gross-income").value) || 0;
        const hoursPerWeek =
          parseFloat(document.getElementById("hours-per-week").value) || 0;
        const payFreq = document.getElementById("pay-frequency").value;

        let annualIncome;
        if (incomeType === "hourly") {
          annualIncome = grossInput * hoursPerWeek * 52;
        } else {
          annualIncome = grossInput;
        }

        const includeCPP = document.getElementById("include-cpp").checked;
        const includeEI = document.getElementById("include-ei").checked;
        const includeFed = document.getElementById("include-federal").checked;
        const includeProv =
          document.getElementById("include-provincial").checked;

        const federalBPA =
          parseFloat(document.getElementById("federal-bpa").value) || 0;
        const abBPA = parseFloat(document.getElementById("ab-bpa").value) || 0;
        const otherFedCredits =
          parseFloat(document.getElementById("other-fed-credits").value) || 0;
        const otherAbCredits =
          parseFloat(document.getElementById("other-ab-credits").value) || 0;

        // Federal tax before credits
        const fedResult = applyBrackets(annualIncome, data.federalBrackets);
        let federalTax = fedResult.tax;
        const fedLowestRate = data.federalBrackets[0].rate;
        const fedCredits = (federalBPA + otherFedCredits) * fedLowestRate;
        federalTax = Math.max(0, federalTax - fedCredits);
        if (!includeFed) federalTax = 0;

        // Alberta tax before credits
        const abResult = applyBrackets(annualIncome, data.abBrackets);
        let abTax = abResult.tax;
        const abLowestRate = data.abBrackets[0].rate;
        const abCredits = (abBPA + otherAbCredits) * abLowestRate;
        abTax = Math.max(0, abTax - abCredits);
        if (!includeProv) abTax = 0;

        // CPP
        let cpp = 0;
        if (includeCPP) {
          const pensionable = Math.max(
            0,
            Math.min(annualIncome, data.cppMaxPensionable) -
              data.cppBasicExemption
          );
          cpp = pensionable * data.cppRate;
        }

        // EI
        let ei = 0;
        if (includeEI) {
          const insurable = Math.min(annualIncome, data.eiMaxInsurable);
          ei = insurable * data.eiRate;
        }

        const totalDeductions = federalTax + abTax + cpp + ei;
        const netIncome = annualIncome - totalDeductions;
        const periods = getPayPeriods(payFreq);
        const grossPerPeriod = annualIncome / periods;
        const netPerPeriod = netIncome / periods;

        const fedPerPeriod = federalTax / periods;
        const abPerPeriod = abTax / periods;
        const cppPerPeriod = cpp / periods;
        const eiPerPeriod = ei / periods;

        const effectiveRate =
          annualIncome > 0 ? (totalDeductions / annualIncome) * 100 : 0;
        const marginalCombined =
          (includeFed ? fedResult.marginalRate : 0) +
          (includeProv ? abResult.marginalRate : 0);

        // Update UI
        document.getElementById("res-gross").textContent =
          formatCurrency(annualIncome);
        document.getElementById("res-fed-tax").textContent =
          formatCurrency(federalTax);
        document.getElementById("res-ab-tax").textContent =
          formatCurrency(abTax);
        document.getElementById("res-cpp").textContent = formatCurrency(cpp);
        document.getElementById("res-ei").textContent = formatCurrency(ei);

        document.getElementById("res-gross-period").textContent =
          formatCurrency2(grossPerPeriod);
        document.getElementById("res-fed-period").textContent =
          formatCurrency2(fedPerPeriod);
        document.getElementById("res-ab-period").textContent =
          formatCurrency2(abPerPeriod);
        document.getElementById("res-cpp-period").textContent =
          formatCurrency2(cppPerPeriod);
        document.getElementById("res-ei-period").textContent =
          formatCurrency2(eiPerPeriod);
        document.getElementById("res-net-period").textContent =
          formatCurrency2(netPerPeriod);

        document.getElementById("net-income-annual").textContent =
          formatCurrency(netIncome);
        document.getElementById("net-income-period").textContent = `Per ${
          payFreq === "annual" ? "year" : payFreq
        }: ${formatCurrency2(netPerPeriod)}`;
        document.getElementById("total-deductions").textContent =
          formatCurrency(totalDeductions);
        document.getElementById(
          "effective-tax-rate"
        ).textContent = `Effective tax rate: ${effectiveRate.toFixed(1)}%`;
        document.getElementById("marginal-rate").textContent = `${(
          marginalCombined * 100
        ).toFixed(1)}%`;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const incomeTypeRadios = document.querySelectorAll(
          'input[name="income-type"]'
        );
        const hoursWrapper = document.getElementById("hours-per-week-wrapper");
        const incomeLabelSuffix = document.getElementById(
          "income-label-suffix"
        );

        incomeTypeRadios.forEach((radio) => {
          radio.addEventListener("change", () => {
            if (radio.value === "hourly" && radio.checked) {
              hoursWrapper.classList.remove("opacity-50");
              hoursWrapper.querySelector("input").disabled = false;
              incomeLabelSuffix.textContent = "(hourly rate)";
            } else if (radio.value === "annual" && radio.checked) {
              hoursWrapper.classList.add("opacity-50");
              hoursWrapper.querySelector("input").disabled = true;
              incomeLabelSuffix.textContent = "(annual, before tax)";
            }
          });
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            calculateAlbertaTax();
          });

        // Auto-calc on load
        calculateAlbertaTax();
      });
    </script>

