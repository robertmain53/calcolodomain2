      const btnCalc = document.getElementById("btn-calc");
      const btnReset = document.getElementById("btn-reset");
      const errorEl = document.getElementById("calc-error");
      const resultsSection = document.getElementById("results-section");

      function parseVal(id) {
        const el = document.getElementById(id);
        const v = parseFloat(el.value);
        return isNaN(v) ? null : v;
      }

      function setBadge(el, ok, text) {
        el.textContent = text;
        el.classList.remove("result-badge-ok", "result-badge-warn");
        if (ok === null) {
          el.classList.add("bg-gray-100", "text-gray-600");
        } else if (ok) {
          el.classList.remove("bg-gray-100", "text-gray-600");
          el.classList.add("result-badge-ok");
        } else {
          el.classList.remove("bg-gray-100", "text-gray-600");
          el.classList.add("result-badge-warn");
        }
      }

      btnCalc.addEventListener("click", () => {
        errorEl.classList.add("hidden");

        const H = parseVal("slope-height");
        const betaDeg = parseVal("slope-angle");
        const gamma = parseVal("unit-weight");
        const c = parseVal("cohesion");
        const phiDeg = parseVal("phi");
        const u = parseVal("pore-pressure") || 0;
        const q = parseVal("surcharge") || 0;
        const kh = parseVal("seismic-coeff") || 0;
        const gammaG = parseVal("gamma-g");
        const gammaQ = parseVal("gamma-q");
        const gammaC = parseVal("gamma-c");
        const gammaPhi = parseVal("gamma-phi");
        const Freq = parseVal("target-fs") || 1.0;

        if (
          [H, betaDeg, gamma, c, phiDeg, gammaG, gammaQ, gammaC, gammaPhi].some(
            (v) => v === null || v < 0
          ) ||
          betaDeg <= 0 ||
          betaDeg >= 89
        ) {
          errorEl.textContent =
            "Please provide valid positive inputs (slope angle between 0 and 89°).";
          errorEl.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const beta = (betaDeg * Math.PI) / 180;
        const phi = (phiDeg * Math.PI) / 180;

        const sinb = Math.sin(beta);
        const cosb = Math.cos(beta);
        if (sinb <= 0) {
          errorEl.textContent = "Slope angle must be greater than 0°.";
          errorEl.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        // Geometry
        const L = H / sinb; // slip length
        const W = (0.5 * gamma * H * H) / sinb; // wedge weight per m

        // Normal stress and shear strength (characteristic)
        const sigmaN = (W * cosb) / L;
        const tau_r = c + (sigmaN - u) * Math.tan(phi); // kPa

        // Driving shear stress (characteristic)
        const T_weight = W * sinb; // downslope component
        const T_seismic = kh * W;
        const T_surcharge = q * H;
        const T_total = T_weight + T_seismic + T_surcharge;
        const tau_d = T_total / L;

        if (tau_d <= 0 || tau_r <= 0) {
          errorEl.textContent =
            "Computed shear stresses are non-positive. Check geometry and loads.";
          errorEl.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const Fs = tau_r / tau_d;

        // EC7 design check
        const c_d = c / gammaC;
        const tanPhi_d = Math.tan(phi) / gammaPhi;
        const tau_r_d = c_d + (sigmaN - u) * tanPhi_d;
        const Rk = tau_r * L;
        const Ek = tau_d * L;
        const Rd = tau_r_d * L;
        const Ed = gammaG * (T_weight + T_seismic) + gammaQ * T_surcharge;
        const eta = Rd / Ed;

        // Update UI
        document.getElementById("result-fs").textContent = Fs.toFixed(2);
        const fsStatus = document.getElementById("result-fs-status");
        const fsOk = Fs >= Freq;
        setBadge(
          fsStatus,
          fsOk,
          fsOk ? "OK – meets target F\u209b" : "Not OK – below target F\u209b"
        );

        document.getElementById("rk-val").textContent = Rk.toFixed(1);
        document.getElementById("ek-val").textContent = Ek.toFixed(1);
        document.getElementById("rd-val").textContent = Rd.toFixed(1);
        document.getElementById("ed-val").textContent = Ed.toFixed(1);

        document.getElementById("result-ec7-ratio").textContent =
          "η = " + eta.toFixed(2);
        const ec7Status = document.getElementById("result-ec7-status");
        const ec7Ok = eta >= 1.0;
        setBadge(
          ec7Status,
          ec7Ok,
          ec7Ok
            ? "EC7 check passed (R\u1d63 ≥ E\u1d63)"
            : "EC7 check not satisfied"
        );

        resultsSection.classList.remove("hidden");
      });

