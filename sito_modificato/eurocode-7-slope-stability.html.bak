        document.getElementById("slope-form").reset();
        document.getElementById("slope-height").value = 10;
        document.getElementById("slope-angle").value = 30;
        document.getElementById("unit-weight").value = 20;
        document.getElementById("cohesion").value = 5;
        document.getElementById("phi").value = 30;
        document.getElementById("pore-pressure").value = 0;
        document.getElementById("surcharge").value = 10;
        document.getElementById("seismic-coeff").value = 0;
        document.getElementById("gamma-g").value = 1.35;
        document.getElementById("gamma-q").value = 1.5;
        document.getElementById("gamma-c").value = 1.25;
        document.getElementById("gamma-phi").value = 1.25;
        document.getElementById("target-fs").value = 1.35;
