    <script>
      // Sync sliders and inputs
      const amountInput = document.getElementById("amount");
      const amountRange = document.getElementById("amount-range");
      const rateInput = document.getElementById("rate");
      const rateRange = document.getElementById("rate-range");
      const termInput = document.getElementById("term");
      const termRange = document.getElementById("term-range");
      const extraInput = document.getElementById("extra-payment");
      const extraRange = document.getElementById("extra-range");

      function link(input, range) {
        input.addEventListener("input", () => {
          if (!isNaN(input.value)) range.value = input.value;
        });
        range.addEventListener("input", () => {
          input.value = range.value;
        });
      }
      link(amountInput, amountRange);
      link(rateInput, rateRange);
      link(termInput, termRange);
      link(extraInput, extraRange);

      const modeSelect = document.getElementById("planner-mode");
      const termWrapper = document.getElementById("term-wrapper");
      const extraWrapper = document.getElementById("extra-wrapper");

      function updateModeUI() {
        const mode = modeSelect.value;
        if (mode === "loan") {
          termWrapper.classList.remove("hidden");
          extraWrapper.classList.add("hidden");
        } else {
          termWrapper.classList.add("hidden");
          extraWrapper.classList.remove("hidden");
        }
      }
      modeSelect.addEventListener("change", () => {
        updateModeUI();
        calculatePlanner();
      });
      updateModeUI();

      const paymentEl = document.getElementById("result-payment");
      const interestEl = document.getElementById("result-interest");
      const totalEl = document.getElementById("result-total");
      const termEl = document.getElementById("result-term");
      const barPrincipal = document.getElementById("bar-principal");
      const barInterest = document.getElementById("bar-interest");
      const barLabel = document.getElementById("bar-label");

      function formatMoney(v) {
        if (!isFinite(v)) return "$0.00";
        return "$" + v.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calculatePlanner() {
        const mode = modeSelect.value;
        let P = parseFloat(amountInput.value);
        const apr = parseFloat(rateInput.value);
        if (!isFinite(P) || P <= 0 || !isFinite(apr) || apr < 0) {
          paymentEl.textContent = "$0.00";
          interestEl.textContent = "$0.00";
          totalEl.textContent = "$0.00";
          termEl.textContent = "–";
          barPrincipal.style.width = "50%";
          barInterest.style.width = "50%";
          barLabel.textContent = "Principal 50% · Interest 50%";
          return;
        }
        const r = apr / 100 / 12;

        let payment = 0,
          totalPaid = 0,
          totalInterest = 0,
          months = 0;

        if (mode === "loan") {
          let years = parseFloat(termInput.value);
          if (!isFinite(years) || years <= 0) years = 1;
          months = Math.round(years * 12);

          if (r === 0) {
            payment = P / months;
          } else {
            const pow = Math.pow(1 + r, months);
            payment = (P * (r * pow)) / (pow - 1);
          }
          totalPaid = payment * months;
          totalInterest = totalPaid - P;
        } else {
          payment = parseFloat(extraInput.value);
          if (!isFinite(payment) || payment <= 0) {
            paymentEl.textContent = "$0.00";
            interestEl.textContent = "$0.00";
            totalEl.textContent = "$0.00";
            termEl.textContent = "–";
            return;
          }
          let balance = P;
          months = 0;
          totalPaid = 0;
          totalInterest = 0;
          const maxMonths = 1200; // safety cap

          while (balance > 0 && months < maxMonths) {
            const interest = balance * r;
            let principalPay = payment - interest;
            if (principalPay <= 0) {
              // Payment too small to cover interest
              months = NaN;
              break;
            }
            if (principalPay > balance) {
              principalPay = balance;
              payment = principalPay + interest;
            }
            balance -= principalPay;
            totalPaid += payment;
            totalInterest += interest;
            months++;
          }
          if (!isFinite(months)) {
            termEl.textContent =
              "Payment too low to ever pay off (increasing balance)";
          }
        }

        paymentEl.textContent = formatMoney(payment);
        interestEl.textContent = formatMoney(totalInterest);
        totalEl.textContent = formatMoney(totalPaid);

        if (isFinite(months) && months > 0) {
          const years = Math.floor(months / 12);
          const remMonths = months % 12;
          let label = "";
          if (years > 0) label += years + " year" + (years > 1 ? "s" : "");
          if (years > 0 && remMonths > 0) label += " ";
          if (remMonths > 0)
            label += remMonths + " month" + (remMonths > 1 ? "s" : "");
          termEl.textContent = label || months + " months";
        } else if (mode === "payoff") {
          termEl.textContent = "Payment too low to pay off";
        } else {
          termEl.textContent = "–";
        }

        const principalShare = P;
        const interestShare = totalInterest > 0 ? totalInterest : 0;
        const sum = principalShare + interestShare;
        if (sum > 0) {
          const pPct = (principalShare / sum) * 100;
          const iPct = (interestShare / sum) * 100;
          barPrincipal.style.width = pPct.toFixed(1) + "%";
          barInterest.style.width = iPct.toFixed(1) + "%";
          barLabel.textContent = `Principal ${pPct.toFixed(
            1
          )}% · Interest ${iPct.toFixed(1)}%`;
        } else {
          barPrincipal.style.width = "50%";
          barInterest.style.width = "50%";
          barLabel.textContent = "Principal 50% · Interest 50%";
        }
      }

      document
        .getElementById("planner-calc")
        .addEventListener("click", calculatePlanner);
      [
        amountInput,
        rateInput,
        termInput,
        extraInput,
        amountRange,
        rateRange,
        termRange,
        extraRange,
      ].forEach((el) => {
        el.addEventListener("change", calculatePlanner);
        el.addEventListener("input", () => {
          // lightweight live update without being too aggressive
          calculatePlanner();
        });
      });

      // Initial calculation
      calculatePlanner();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
