          ],
        },
        YT: {
          basicPersonal: 15805,
          brackets: [
            { upTo: 55867, rate: 0.064 },
            { upTo: 111733, rate: 0.09 },
            { upTo: 173205, rate: 0.109 },
            { upTo: 246752, rate: 0.128 },
            { upTo: Infinity, rate: 0.15 },
          ],
        },
      };

      // CPP/QPP & EI/QPIP (approx 2024)
      const CPP_RATE = 0.0595;
      const CPP_BASIC_EXEMPTION = 3500;
      const CPP_MAX_PENSIONABLE = 68500;
      const CPP_MAX_CONTRIB =
        (CPP_MAX_PENSIONABLE - CPP_BASIC_EXEMPTION) * CPP_RATE;

      const EI_RATE = 0.0166;
      const EI_MAX_INSURABLE = 63100;
      const EI_MAX_CONTRIB = EI_RATE * EI_MAX_INSURABLE;

      // Simple Quebec-style approximations (not official)
      const QPP_RATE = 0.0615;
      const QPP_BASIC_EXEMPTION = 3500;
      const QPP_MAX_PENSIONABLE = 68500;
      const QPP_MAX_CONTRIB =
        (QPP_MAX_PENSIONABLE - QPP_BASIC_EXEMPTION) * QPP_RATE;

      const QPIP_RATE = 0.00494;
      const QPIP_MAX_INSURABLE = 91000;
      const QPIP_MAX_CONTRIB = QPIP_RATE * QPIP_MAX_INSURABLE;

      function applyBrackets(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, b.upTo - lastLimit);
          if (span > 0) {
            tax += span * b.rate;
            remaining -= span;
          }
          lastLimit = b.upTo;
        }
        return tax;
      }

      function calcFederalTax(taxable) {
        const gross = applyBrackets(taxable, FEDERAL_BRACKETS_2024);
        const creditRate = 0.15;
        const basicCredit = FEDERAL_BASIC_PERSONAL * creditRate;
        const net = Math.max(0, gross - basicCredit);
        return { gross, credit: basicCredit, net };
      }

      function calcProvTax(provCode, taxable) {
        const prov = PROV_DATA_2024[provCode];
        if (!prov) return { gross: 0, credit: 0, net: 0 };
        const gross = applyBrackets(taxable, prov.brackets);
        const creditRate = provCode === "QC" ? 0.15 : 0.1;
        const basicCredit = prov.basicPersonal * creditRate;
        const net = Math.max(0, gross - basicCredit);
        return { gross, credit: basicCredit, net };
      }

      function calcCPPandEI(provCode, employmentIncome, includeCPP, includeEI) {
        let cpp = 0,
          ei = 0;
        if (includeCPP) {
          if (provCode === "QC") {
            const base = Math.max(
              0,
              Math.min(employmentIncome, QPP_MAX_PENSIONABLE) -
                QPP_BASIC_EXEMPTION
            );
            cpp = Math.min(QPP_MAX_CONTRIB, base * QPP_RATE);
          } else {
            const base = Math.max(
              0,
              Math.min(employmentIncome, CPP_MAX_PENSIONABLE) -
                CPP_BASIC_EXEMPTION
            );
            cpp = Math.min(CPP_MAX_CONTRIB, base * CPP_RATE);
          }
        }
        if (includeEI) {
          if (provCode === "QC") {
            const base = Math.min(employmentIncome, QPIP_MAX_INSURABLE);
            ei = Math.min(QPIP_MAX_CONTRIB, base * QPIP_RATE);
          } else {
            const base = Math.min(employmentIncome, EI_MAX_INSURABLE);
            ei = Math.min(EI_MAX_CONTRIB, base * EI_RATE);
          }
        }
        return { cpp, ei };
      }

      function formatMoney(v) {
        return v.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }
      function formatPercent(v) {
        return (v * 100).toFixed(1) + "%";
      }

      function calculateCanadaTax() {
        const province = document.getElementById("province").value;
        const employment =
          Number(document.getElementById("employment-income").value) || 0;
        const other =
          Number(document.getElementById("other-income").value) || 0;
        const rrsp = Number(document.getElementById("rrsp").value) || 0;
        const includeCPP = document.getElementById("include-cpp").checked;
        const includeEI = document.getElementById("include-ei").checked;

        const errorEl = document.getElementById("calc-error");
        if (employment < 0 || other < 0 || rrsp < 0) {
          errorEl.textContent = "Values cannot be negative.";
          errorEl.classList.remove("hidden");
          return;
        }
        const grossIncome = employment + other;
        if (grossIncome <= 0) {
          errorEl.textContent = "Please enter a positive income.";
          errorEl.classList.remove("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const taxableIncome = Math.max(0, grossIncome - rrsp);

        const fed = calcFederalTax(taxableIncome);
        const prov = calcProvTax(province, taxableIncome);
        const { cpp, ei } = calcCPPandEI(
          province,
          employment,
          includeCPP,
          includeEI
        );

        const totalIncomeTax = fed.net + prov.net;
        const totalDeductions = totalIncomeTax + cpp + ei;
        const netPay = grossIncome - totalDeductions;
        const effRate = totalIncomeTax / grossIncome;

        // Update summary cards
        document.getElementById("result-net").textContent = formatMoney(netPay);
        document.getElementById("result-total-tax").textContent =
          formatMoney(totalIncomeTax);
        document.getElementById("result-eff-rate").textContent =
          formatPercent(effRate);

        // Income breakdown
        document.getElementById("res-employment").textContent =
          formatMoney(employment);
        document.getElementById("res-other").textContent = formatMoney(other);
        document.getElementById("res-gross").textContent =
          formatMoney(grossIncome);
        document.getElementById("res-rrsp").textContent =
          rrsp > 0 ? "− " + formatMoney(rrsp) : formatMoney(0);
        document.getElementById("res-taxable").textContent =
          formatMoney(taxableIncome);

        // Tax & deductions
        document.getElementById("res-fed-tax").textContent = formatMoney(
          fed.net
        );
        document.getElementById("res-prov-tax").textContent = formatMoney(
          prov.net
        );
        document.getElementById("res-cpp").textContent = includeCPP
          ? "− " + formatMoney(cpp)
          : formatMoney(0);
        document.getElementById("res-ei").textContent = includeEI
          ? "− " + formatMoney(ei)
          : formatMoney(0);
        document.getElementById("res-total-deductions").textContent =
          "− " + formatMoney(totalDeductions);

        // Summary table
        const tbody = document.getElementById("summary-table-body");
        tbody.innerHTML = "";
        const rows = [
          { label: "Federal income tax", amount: fed.net },
          { label: "Provincial income tax", amount: prov.net },
          { label: "CPP / QPP", amount: cpp },
          { label: "EI / QPIP", amount: ei },
          { label: "Total tax & payroll deductions", amount: totalDeductions },
          { label: "Net take‑home pay", amount: netPay },
        ];
        rows.forEach((r) => {
          const tr = document.createElement("tr");
          tr.className = "border-t border-gray-100";
          const pct =
            r.label === "Net take‑home pay"
              ? netPay / grossIncome
              : r.amount / grossIncome;
          tr.innerHTML = `
        <td class="px-3 py-2">${r.label}</td>
        <td class="px-3 py-2 text-right">${formatMoney(r.amount)}</td>
        <td class="px-3 py-2 text-right">${formatPercent(pct)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateCanadaTax);
      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("province").value = "ON";
        document.getElementById("employment-income").value = 70000;
        document.getElementById("other-income").value = 0;
        document.getElementById("rrsp").value = 0;
        document.getElementById("include-cpp").checked = true;
        document.getElementById("include-ei").checked = true;
        document.querySelector(
          'input[name="filing-status"][value="single"]'
        ).checked = true;
        document.getElementById("calc-error").classList.add("hidden");
        calculateCanadaTax();
      });

      // Auto-calc on load
      window.addEventListener("DOMContentLoaded", calculateCanadaTax);
    </script>

