    <script>
      // Unit handling and calculator logic
      (function () {
        const unitButtons = {
          imperial: document.getElementById("unit-imperial"),
          metric: document.getElementById("unit-metric"),
        };

        const wallLength = document.getElementById("wallLength");
        const wallHeight = document.getElementById("wallHeight");
        const wallLengthUnit = document.getElementById("wallLengthUnit");
        const wallHeightUnit = document.getElementById("wallHeightUnit");

        const blockSizeSelect = document.getElementById("blockSize");
        const customBlockInputs = document.getElementById("customBlockInputs");
        const blockLength = document.getElementById("blockLength");
        const blockHeight = document.getElementById("blockHeight");
        const blockLengthUnit = document.getElementById("blockLengthUnit");
        const blockHeightUnit = document.getElementById("blockHeightUnit");

        const reinforcedCheckbox = document.getElementById("reinforced");
        const reinforcementOptions = document.getElementById(
          "reinforcementOptions"
        );
        const vertSpacing = document.getElementById("vertSpacing");
        const horizSpacing = document.getElementById("horizSpacing");
        const vertSpacingUnit = document.getElementById("vertSpacingUnit");
        const horizSpacingUnit = document.getElementById("horizSpacingUnit");

        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const resultsContainer = document.getElementById("resultsContainer");
        const calcError = document.getElementById("calcError");

        let currentUnit = "imperial"; // 'imperial' or 'metric'

        function setUnits(unit) {
          currentUnit = unit;
          if (unit === "imperial") {
            unitButtons.imperial.classList.add("bg-blue-600", "text-white");
            unitButtons.imperial.classList.remove(
              "bg-gray-100",
              "text-gray-700"
            );
            unitButtons.metric.classList.add("bg-gray-100", "text-gray-700");
            unitButtons.metric.classList.remove("bg-blue-600", "text-white");

            wallLengthUnit.textContent = "ft";
            wallHeightUnit.textContent = "ft";
            blockLengthUnit.textContent = "in";
            blockHeightUnit.textContent = "in";
            vertSpacingUnit.textContent = "in o.c.";
            horizSpacingUnit.textContent = "in o.c.";
          } else {
            unitButtons.metric.classList.add("bg-blue-600", "text-white");
            unitButtons.metric.classList.remove("bg-gray-100", "text-gray-700");
            unitButtons.imperial.classList.add("bg-gray-100", "text-gray-700");
            unitButtons.imperial.classList.remove("bg-blue-600", "text-white");

            wallLengthUnit.textContent = "m";
            wallHeightUnit.textContent = "m";
            blockLengthUnit.textContent = "mm";
            blockHeightUnit.textContent = "mm";
            vertSpacingUnit.textContent = "mm o.c.";
            horizSpacingUnit.textContent = "mm o.c.";
          }
        }

        unitButtons.imperial.addEventListener("click", () =>
          setUnits("imperial")
        );
        unitButtons.metric.addEventListener("click", () => setUnits("metric"));

        blockSizeSelect.addEventListener("change", () => {
          if (blockSizeSelect.value === "custom") {
            customBlockInputs.classList.remove("hidden");
          } else {
            customBlockInputs.classList.add("hidden");
          }
        });

        reinforcedCheckbox.addEventListener("change", () => {
          if (reinforcedCheckbox.checked) {
            reinforcementOptions.classList.remove("hidden");
          } else {
            reinforcementOptions.classList.add("hidden");
          }
        });

        function formatNumber(value, decimals = 2) {
          return Number(value).toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          });
        }

        function calculate() {
          calcError.classList.add("hidden");

          const L = parseFloat(wallLength.value);
          const H = parseFloat(wallHeight.value);
          const wastePercent =
            parseFloat(document.getElementById("wastePercent").value) || 0;

          if (!(L > 0) || !(H > 0)) {
            calcError.classList.remove("hidden");
            return;
          }

          // Convert wall dimensions to feet/meters and area to ft²/m²
          let wallArea,
            wallLengthFeet,
            wallHeightFeet,
            wallLengthMeters,
            wallHeightMeters;
          if (currentUnit === "imperial") {
            wallLengthFeet = L;
            wallHeightFeet = H;
            wallArea = L * H; // ft²
          } else {
            wallLengthMeters = L;
            wallHeightMeters = H;
            wallArea = L * H; // m²
          }

          // Block face area
          let blockFaceArea; // ft² or m² depending on unit
          if (blockSizeSelect.value === "standard8x16") {
            blockFaceArea = currentUnit === "imperial" ? 1.125 : 0.104; // approx
          } else if (blockSizeSelect.value === "half8x8") {
            blockFaceArea = currentUnit === "imperial" ? 0.5625 : 0.052; // approx
          } else {
            // custom
            const bL = parseFloat(blockLength.value);
            const bH = parseFloat(blockHeight.value);
            if (currentUnit === "imperial") {
              // inches to feet
              const bLft = bL / 12;
              const bHft = bH / 12;
              blockFaceArea = bLft * bHft;
            } else {
              // mm to m
              const bLm = bL / 1000;
              const bHm = bH / 1000;
              blockFaceArea = bLm * bHm;
            }
          }

          if (!(blockFaceArea > 0)) {
            calcError.textContent = "Please enter a valid block size.";
            calcError.classList.remove("hidden");
            return;
          }

          // Block count
          let blocksRaw = wallArea / blockFaceArea;
          let blocksWithWaste = blocksRaw * (1 + wastePercent / 100);
          const blocksRounded = Math.ceil(blocksWithWaste);

          // Mortar estimate
          let mortarVolume; // ft³ or m³
          if (currentUnit === "imperial") {
            mortarVolume = blocksRounded * 0.008; // ft³ per block (approx)
          } else {
            mortarVolume = blocksRounded * 0.00023; // m³ per block (approx)
          }

          // Convert mortar volume to bags
          let mortarBags;
          if (currentUnit === "imperial") {
            const ft3PerBag = 0.6; // 80 lb bag yield
            mortarBags = mortarVolume / ft3PerBag;
          } else {
            const m3PerBag = 0.025; // 25 kg bag yield approx
            mortarBags = mortarVolume / m3PerBag;
          }

          // Reinforcement and grout
          let rebarLengthTotal = 0;
          let groutVolume = 0;
          let vertBars = 0;
          let horizBars = 0;

          if (reinforcedCheckbox.checked) {
            if (currentUnit === "imperial") {
              const vSpacingIn = parseFloat(vertSpacing.value) || 32;
              const hSpacingIn = parseFloat(horizSpacing.value) || 48;

              const vSpacingFt = vSpacingIn / 12;
              const hSpacingFt = hSpacingIn / 12;

              vertBars = Math.floor(wallLengthFeet / vSpacingFt) + 1;
              horizBars = Math.floor(wallHeightFeet / hSpacingFt) + 1;

              const vertBarLength = wallHeightFeet;
              const horizBarLength = wallLengthFeet;

              rebarLengthTotal =
                vertBars * vertBarLength + horizBars * horizBarLength;

              // Grout volume approximation: assume each grouted cell ~0.06 ft³ per ft of height
              const cellsPerCourse = Math.round(wallLengthFeet / (16 / 12));
              const courses = Math.round(wallHeightFeet / (8 / 12));
              let groutedCells = cellsPerCourse * courses * 0.25; // assume 25% cells grouted
              if (document.getElementById("groutType").value === "full") {
                groutedCells = cellsPerCourse * courses;
              }
              groutVolume = groutedCells * 0.06; // ft³
            } else {
              const vSpacingMm = parseFloat(vertSpacing.value) || 800;
              const hSpacingMm = parseFloat(horizSpacing.value) || 1200;

              const vSpacingM = vSpacingMm / 1000;
              const hSpacingM = hSpacingMm / 1000;

              vertBars = Math.floor(wallLengthMeters / vSpacingM) + 1;
              horizBars = Math.floor(wallHeightMeters / hSpacingM) + 1;

              const vertBarLength = wallHeightMeters;
              const horizBarLength = wallLengthMeters;

              rebarLengthTotal =
                vertBars * vertBarLength + horizBars * horizBarLength;

              const cellsPerCourse = Math.round(wallLengthMeters / 0.4); // 400 mm nominal length
              const courses = Math.round(wallHeightMeters / 0.2); // 200 mm nominal height
              let groutedCells = cellsPerCourse * courses * 0.25;
              if (document.getElementById("groutType").value === "full") {
                groutedCells = cellsPerCourse * courses;
              }
              groutVolume = groutedCells * 0.0017; // m³ approx
            }
          }

          // Grout bags
          let groutBags = 0;
          if (groutVolume > 0) {
            if (currentUnit === "imperial") {
              const ft3PerBagGrout = 0.5; // 80 lb bag grout approx
              groutBags = groutVolume / ft3PerBagGrout;
            } else {
              const m3PerBagGrout = 0.022; // 25 kg bag approx
              groutBags = groutVolume / m3PerBagGrout;
            }
          }

          // Cost
          const costPerBlock =
            parseFloat(document.getElementById("costPerBlock").value) || 0;
          const costPerMortarBag =
            parseFloat(document.getElementById("costPerMortarBag").value) || 0;
          const costPerGroutBag =
            parseFloat(document.getElementById("costPerGroutBag").value) || 0;
          const costPerRebarLength =
            parseFloat(document.getElementById("costPerRebarLength").value) ||
            0;

          const blockCost = blocksRounded * costPerBlock;
          const mortarCost = Math.ceil(mortarBags) * costPerMortarBag;
          const groutCost = Math.ceil(groutBags) * costPerGroutBag;
          const rebarCost = rebarLengthTotal * costPerRebarLength;

          const totalCost = blockCost + mortarCost + groutCost + rebarCost;

          // Build results HTML
          const areaUnit = currentUnit === "imperial" ? "ft²" : "m²";
          const lengthUnit = currentUnit === "imperial" ? "ft" : "m";
          const volUnit = currentUnit === "imperial" ? "ft³" : "m³";
          const rebarUnit = currentUnit === "imperial" ? "ft" : "m";

          let html = "";

          html += '<div class="grid md:grid-cols-3 gap-4 mb-4">';
          html +=
            '  <div class="bg-gray-50 rounded-md p-3 border border-gray-200">';
          html +=
            '    <div class="text-xs uppercase text-gray-500">Wall area</div>';
          html +=
            '    <div class="text-lg font-semibold">' +
            formatNumber(wallArea, 2) +
            " " +
            areaUnit +
            "</div>";
          html += "  </div>";
          html +=
            '  <div class="bg-gray-50 rounded-md p-3 border border-gray-200">';
          html +=
            '    <div class="text-xs uppercase text-gray-500">Blocks needed</div>';
          html +=
            '    <div class="text-lg font-semibold">' +
            blocksRounded +
            "</div>";
          html +=
            '    <div class="text-xs text-gray-500">Includes ' +
            wastePercent +
            "% waste</div>";
          html += "  </div>";
          html +=
            '  <div class="bg-gray-50 rounded-md p-3 border border-gray-200">';
          html +=
            '    <div class="text-xs uppercase text-gray-500">Estimated material cost</div>';
          html +=
            '    <div class="text-lg font-semibold">$' +
            formatNumber(totalCost, 2) +
            "</div>";
          html +=
            '    <div class="text-xs text-gray-500">Based on your unit prices</div>';
          html += "  </div>";
          html += "</div>";

          html += '<div class="border border-gray-200 rounded-md p-4 mb-3">';
          html +=
            '  <h3 class="text-sm font-semibold mb-2">Blocks & mortar</h3>';
          html +=
            '  <ul class="text-sm text-gray-700 list-disc ml-5 space-y-1">';
          html +=
            "    <li><strong>" +
            blocksRounded +
            "</strong> concrete blocks (CMU)</li>";
          html +=
            "    <li><strong>" +
            formatNumber(mortarVolume, 3) +
            " " +
            volUnit +
            "</strong> of mortar (approx.)</li>";
          html +=
            "    <li><strong>" +
            Math.ceil(mortarBags) +
            "</strong> bags of mortar mix (rounded up)</li>";
          html += "  </ul>";
          html += "</div>";

          if (reinforcedCheckbox.checked) {
            html += '<div class="border border-gray-200 rounded-md p-4 mb-3">';
            html +=
              '  <h3 class="text-sm font-semibold mb-2">Reinforcement & grout</h3>';
            html +=
              '  <ul class="text-sm text-gray-700 list-disc ml-5 space-y-1">';
            html +=
              "    <li><strong>" +
              vertBars +
              "</strong> vertical bars and <strong>" +
              horizBars +
              "</strong> horizontal bars (approx.)</li>";
            html +=
              "    <li><strong>" +
              formatNumber(rebarLengthTotal, 1) +
              " " +
              rebarUnit +
              "</strong> total rebar length</li>";
            if (groutVolume > 0) {
              html +=
                "    <li><strong>" +
                formatNumber(groutVolume, 3) +
                " " +
                volUnit +
                "</strong> of grout (approx.)</li>";
              html +=
                "    <li><strong>" +
                Math.ceil(groutBags) +
                "</strong> bags of grout mix (rounded up)</li>";
            }
            html += "  </ul>";
            html += "</div>";
          }

          html += '<div class="border border-gray-200 rounded-md p-4">';
          html +=
            '  <h3 class="text-sm font-semibold mb-2">Cost breakdown</h3>';
          html +=
            '  <ul class="text-sm text-gray-700 list-disc ml-5 space-y-1">';
          html +=
            "    <li>Blocks: <strong>$" +
            formatNumber(blockCost, 2) +
            "</strong></li>";
          html +=
            "    <li>Mortar: <strong>$" +
            formatNumber(mortarCost, 2) +
            "</strong></li>";
          if (reinforcedCheckbox.checked) {
            html +=
              "    <li>Grout: <strong>$" +
              formatNumber(groutCost, 2) +
              "</strong></li>";
            html +=
              "    <li>Rebar: <strong>$" +
              formatNumber(rebarCost, 2) +
              "</strong></li>";
          }
          html +=
            '    <li class="mt-1">Total (materials only): <strong>$' +
            formatNumber(totalCost, 2) +
            "</strong></li>";
          html += "  </ul>";
          html +=
            '  <p class="mt-2 text-xs text-gray-500">Note: Labor, equipment, footing concrete, drainage, and backfill are not included. Always verify quantities with your supplier or engineer.</p>';
          html += "</div>";

          resultsContainer.innerHTML = html;
        }

        calculateBtn.addEventListener("click", calculate);

        resetBtn.addEventListener("click", () => {
          wallLength.value = 20;
          wallHeight.value = 6;
          blockSizeSelect.value = "standard8x16";
          customBlockInputs.classList.add("hidden");
          document.getElementById("wastePercent").value = 5;
          reinforcedCheckbox.checked = false;
          reinforcementOptions.classList.add("hidden");
          vertSpacing.value = 32;
          horizSpacing.value = 48;
          document.getElementById("groutType").value = "partial";
          document.getElementById("barDiameter").value = "0.5";
          document.getElementById("costPerBlock").value = 2.25;
          document.getElementById("costPerMortarBag").value = 7.5;
          document.getElementById("costPerGroutBag").value = 8.0;
          document.getElementById("costPerRebarLength").value = 0.8;
          calcError.classList.add("hidden");
          resultsContainer.innerHTML =
            '<div class="bg-blue-50 border border-blue-100 rounded-md p-4"><p class="text-sm text-blue-800">Enter your wall dimensions and click “Calculate materials” to see a full breakdown of blocks, mortar, grout, rebar, and cost.</p></div>';
        });

        // Initialize default units
        setUnits("imperial");
      })();
    </script>

