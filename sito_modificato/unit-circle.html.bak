        document.getElementById('calculateBtn').addEventListener('click', function() {
            const angle = parseFloat(document.getElementById('angle').value);
            const radians = angle * (Math.PI / 180);
            const sineValue = Math.sin(radians).toFixed(2);
            const cosineValue = Math.cos(radians).toFixed(2);
            const tangentValue = Math.tan(radians).toFixed(2);

            document.getElementById('sineValue').textContent = sineValue;
            document.getElementById('cosineValue').textContent = cosineValue;
            document.getElementById('tangentValue').textContent = tangentValue;
        });
    </script>


