    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        ?.addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          if (!menu) return;
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", String(isHidden));
        });

      // Child-Pugh calculator logic
      (function () {
        const biliInput = document.getElementById("bilirubin");
        const biliUnitBtns = document.querySelectorAll(".bili-unit-btn");
        const biliUnitLabel = document.getElementById("bilirubin-unit-label");

        const coagInput = document.getElementById("coag");
        const coagTypeBtns = document.querySelectorAll(".coag-type-btn");
        const coagHelp = document.getElementById("coag-help");

        let biliUnit = "mgdl"; // 'mgdl' or 'umol'
        let coagType = "inr"; // 'inr' or 'pt'

        biliUnitBtns.forEach((btn) => {
          btn.addEventListener("click", () => {
            biliUnit = btn.getAttribute("data-bili-unit");
            biliUnitBtns.forEach((b) => {
              const active = b === btn;
              b.classList.toggle("border-blue-500", active);
              b.classList.toggle("text-blue-600", active);
              b.classList.toggle("bg-blue-50", active);
              b.classList.toggle("border-gray-300", !active);
              b.classList.toggle("text-gray-700", !active);
              b.classList.toggle("bg-gray-50", !active);
            });
            biliUnitLabel.textContent =
              biliUnit === "mgdl" ? "mg/dL" : "µmol/L";
            biliInput.value = "";
          });
        });

        coagTypeBtns.forEach((btn) => {
          btn.addEventListener("click", () => {
            coagType = btn.getAttribute("data-coag-type");
            coagTypeBtns.forEach((b) => {
              const active = b === btn;
              b.classList.toggle("border-blue-500", active);
              b.classList.toggle("text-blue-600", active);
              b.classList.toggle("bg-blue-50", active);
              b.classList.toggle("border-gray-300", !active);
              b.classList.toggle("text-gray-700", !active);
              b.classList.toggle("bg-gray-50", !active);
            });
            coagHelp.textContent =
              coagType === "inr"
                ? "Enter INR value."
                : "Enter PT prolongation in seconds above control.";
            coagInput.placeholder = coagType === "inr" ? "e.g. 1.4" : "e.g. 5";
            coagInput.value = "";
          });
        });

        function scoreBilirubin() {
          const v = parseFloat(biliInput.value);
          if (isNaN(v) || v < 0) return null;
          let mgdl = v;
          if (biliUnit === "umol") {
            mgdl = v / 17.1;
          }
          if (mgdl < 2) return { points: 1, desc: "< 2 mg/dL" };
          if (mgdl <= 3) return { points: 2, desc: "2–3 mg/dL" };
          return { points: 3, desc: "> 3 mg/dL" };
        }

        function scoreAlbumin() {
          const v = parseFloat(document.getElementById("albumin").value);
          if (isNaN(v) || v < 0) return null;
          if (v > 3.5) return { points: 1, desc: "> 3.5 g/dL" };
          if (v >= 2.8) return { points: 2, desc: "2.8–3.5 g/dL" };
          return { points: 3, desc: "< 2.8 g/dL" };
        }

        function scoreCoag() {
          const v = parseFloat(coagInput.value);
          if (isNaN(v) || v < 0) return null;
          if (coagType === "inr") {
            if (v < 1.7) return { points: 1, desc: "INR < 1.7" };
            if (v <= 2.3) return { points: 2, desc: "INR 1.7–2.3" };
            return { points: 3, desc: "INR > 2.3" };
          } else {
            if (v < 4) return { points: 1, desc: "< 4 s above control" };
            if (v <= 6) return { points: 2, desc: "4–6 s above control" };
            return { points: 3, desc: "> 6 s above control" };
          }
        }

        function scoreAscites() {
          const v = document.getElementById("ascites").value;
          if (!v) return null;
          const points = parseInt(v, 10);
          let desc = "";
          if (points === 1) desc = "None";
          if (points === 2) desc = "Mild, controlled with diuretics";
          if (points === 3) desc = "Moderate–severe, refractory";
          return { points, desc };
        }

        function scoreEnceph() {
          const v = document.getElementById("encephalopathy").value;
          if (!v) return null;
          const points = parseInt(v, 10);
          let desc = "";
          if (points === 1) desc = "None";
          if (points === 2) desc = "Grade I–II or controlled";
          if (points === 3) desc = "Grade III–IV or refractory";
          return { points, desc };
        }

        function interpretScore(total) {
          if (total == null)
            return { cls: "–", survival: "–", text: "Incomplete data." };
          if (total <= 6) {
            return {
              cls: "Class A (well-compensated)",
              survival: "Approx. 1-year survival ~95%",
              text: "Well-compensated cirrhosis with relatively good short-term prognosis. Continue surveillance and manage complications; consider early transplant evaluation in appropriate patients.",
            };
          } else if (total <= 9) {
            return {
              cls: "Class B (significant compromise)",
              survival: "Approx. 1-year survival ~75–80%",
              text: "Significant hepatic functional impairment. Higher risk of decompensation and complications; transplant referral and optimization of medical therapy are usually indicated.",
            };
          } else {
            return {
              cls: "Class C (decompensated)",
              survival: "Approx. 1-year survival ~45–55%",
              text: "Advanced decompensated cirrhosis with poor prognosis. Urgent transplant evaluation and intensive management of complications are typically required.",
            };
          }
        }

        document
          .getElementById("calculate-btn")
          .addEventListener("click", () => {
            const bili = scoreBilirubin();
            const alb = scoreAlbumin();
            const coag = scoreCoag();
            const asc = scoreAscites();
            const enc = scoreEnceph();

            if (!bili || !alb || !coag || !asc || !enc) {
              alert(
                "Please complete all fields (bilirubin, albumin, coagulation, ascites, encephalopathy)."
              );
              return;
            }

            const total =
              bili.points + alb.points + coag.points + asc.points + enc.points;
            const interp = interpretScore(total);

            document.getElementById("total-score").textContent =
              total.toString();
            document.getElementById("child-class").textContent = interp.cls;
            document.getElementById("survival").textContent = interp.survival;
            document.getElementById("interpretation").textContent = interp.text;

            document.getElementById("detail-bili").textContent = `Bilirubin: ${
              bili.desc
            } (${bili.points} point${bili.points === 1 ? "" : "s"})`;
            document.getElementById("detail-alb").textContent = `Albumin: ${
              alb.desc
            } (${alb.points} point${alb.points === 1 ? "" : "s"})`;
            document.getElementById(
              "detail-coag"
            ).textContent = `Coagulation: ${coag.desc} (${coag.points} point${
              coag.points === 1 ? "" : "s"
            })`;
            document.getElementById("detail-ascites").textContent = `Ascites: ${
              asc.desc
            } (${asc.points} point${asc.points === 1 ? "" : "s"})`;
            document.getElementById(
              "detail-enceph"
            ).textContent = `Encephalopathy: ${enc.desc} (${enc.points} point${
              enc.points === 1 ? "" : "s"
            })`;
          });

        document.getElementById("reset-btn").addEventListener("click", () => {
          biliInput.value = "";
          document.getElementById("albumin").value = "";
          coagInput.value = "";
          document.getElementById("ascites").value = "";
          document.getElementById("encephalopathy").value = "";
          document.getElementById("total-score").textContent = "–";
          document.getElementById("child-class").textContent = "–";
          document.getElementById("survival").textContent = "–";
          document.getElementById("interpretation").textContent =
            "Fill in the fields and click “Calculate” to see interpretation.";
          document.getElementById("detail-bili").textContent = "Bilirubin: –";
          document.getElementById("detail-alb").textContent = "Albumin: –";
          document.getElementById("detail-coag").textContent =
            "Coagulation (INR/PT): –";
          document.getElementById("detail-ascites").textContent = "Ascites: –";
          document.getElementById("detail-enceph").textContent =
            "Encephalopathy: –";
        });
      })();
    </script>

