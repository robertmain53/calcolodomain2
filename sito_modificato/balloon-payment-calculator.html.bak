    <script>
      // UI helpers
      const fmtCurrency = (v) => {
        if (!isFinite(v)) return "$0.00";
        return v.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      };
      const fmtPercent = (v) => {
        if (!isFinite(v)) return "0.00%";
        return (v * 100).toFixed(2) + "%";
      };

      // IRR (APR) via bisection
      function computeIRR(
        cashFlows,
        guessLow = -0.9999,
        guessHigh = 1,
        maxIter = 100,
        tol = 1e-7
      ) {
        const npv = (rate) =>
          cashFlows.reduce((acc, cf, i) => acc + cf / Math.pow(1 + rate, i), 0);
        let low = guessLow,
          high = guessHigh;
        let npvLow = npv(low),
          npvHigh = npv(high);
        if (npvLow * npvHigh > 0) return NaN;
        for (let i = 0; i < maxIter; i++) {
          const mid = (low + high) / 2;
          const npvMid = npv(mid);
          if (Math.abs(npvMid) < tol) return mid;
          if (npvLow * npvMid < 0) {
            high = mid;
            npvHigh = npvMid;
          } else {
            low = mid;
            npvLow = npvMid;
          }
        }
        return (low + high) / 2;
      }

      function calculateBalloonLoan() {
        const loanAmount = parseFloat(
          document.getElementById("loanAmount").value
        );
        const annualRate =
          parseFloat(document.getElementById("annualRate").value) / 100;
        const loanTermYears = parseFloat(
          document.getElementById("loanTermYears").value
        );
        const amortYears = parseFloat(
          document.getElementById("amortYears").value
        );
        const paymentsPerYear = parseInt(
          document.getElementById("paymentsPerYear").value,
          10
        );
        const compoundsPerYear = parseInt(
          document.getElementById("compoundsPerYear").value,
          10
        );
        const usePercent = !document
          .getElementById("balloon-percent-wrapper")
          .classList.contains("hidden");
        const balloonPercent = parseFloat(
          document.getElementById("balloonPercent").value
        );
        const balloonAmountInput = parseFloat(
          document.getElementById("balloonAmount").value
        );
        const errorMsg = document.getElementById("errorMsg");
        errorMsg.textContent = "";

        if (
          !(loanAmount > 0) ||
          !(annualRate >= 0) ||
          !(loanTermYears > 0) ||
          !(amortYears > 0)
        ) {
          errorMsg.textContent =
            "Please enter valid positive values for loan amount, rate, and terms.";
          return null;
        }

        const N_term = Math.round(loanTermYears * paymentsPerYear);
        const N_amort = Math.round(amortYears * paymentsPerYear);
        if (N_term <= 0 || N_amort <= 0) {
          errorMsg.textContent =
            "Loan term and amortization period must be at least one payment.";
          return null;
        }

        // Effective rate per payment period
        const i_eff =
          Math.pow(
            1 + annualRate / compoundsPerYear,
            compoundsPerYear / paymentsPerYear
          ) - 1;

        // Payment for full amortization over N_amort
        let payment;
        if (i_eff === 0) {
          payment = loanAmount / N_amort;
        } else {
          payment = loanAmount * (i_eff / (1 - Math.pow(1 + i_eff, -N_amort)));
        }

        // Compute remaining balance after N_term with that payment
        const balanceAfterTerm = (k) => {
          if (i_eff === 0) {
            return loanAmount - payment * k;
          }
          return (
            loanAmount * Math.pow(1 + i_eff, k) -
            payment * ((Math.pow(1 + i_eff, k) - 1) / i_eff)
          );
        };

        let balloon;
        if (usePercent) {
          // Adjust payment so that balloon matches target percentage of original loan
          const targetBalloon = loanAmount * (balloonPercent / 100);
          if (!(balloonPercent >= 0 && balloonPercent <= 100)) {
            errorMsg.textContent =
              "Balloon percentage must be between 0 and 100.";
            return null;
          }
          // Solve for payment using bisection on payment amount
          let low = 0;
          let high = loanAmount; // upper bound for payment per period
          for (let iter = 0; iter < 80; iter++) {
            const mid = (low + high) / 2;
            const bal =
              i_eff === 0
                ? loanAmount - mid * N_term
                : loanAmount * Math.pow(1 + i_eff, N_term) -
                  mid * ((Math.pow(1 + i_eff, N_term) - 1) / i_eff);
            if (bal > targetBalloon) {
              // payment too low, balance too high
              low = mid;
            } else {
              high = mid;
            }
          }
          payment = (low + high) / 2;
          balloon =
            i_eff === 0
              ? loanAmount - payment * N_term
              : loanAmount * Math.pow(1 + i_eff, N_term) -
                payment * ((Math.pow(1 + i_eff, N_term) - 1) / i_eff);
        } else {
          // Use fixed balloon amount; adjust payment so remaining balance equals that amount
          const targetBalloon = balloonAmountInput;
          if (!(targetBalloon >= 0 && targetBalloon <= loanAmount)) {
            errorMsg.textContent =
              "Balloon amount must be between $0 and the original loan amount.";
            return null;
          }
          let low = 0;
          let high = loanAmount;
          for (let iter = 0; iter < 80; iter++) {
            const mid = (low + high) / 2;
            const bal =
              i_eff === 0
                ? loanAmount - mid * N_term
                : loanAmount * Math.pow(1 + i_eff, N_term) -
                  mid * ((Math.pow(1 + i_eff, N_term) - 1) / i_eff);
            if (bal > targetBalloon) {
              low = mid;
            } else {
              high = mid;
            }
          }
          payment = (low + high) / 2;
          balloon =
            i_eff === 0
              ? loanAmount - payment * N_term
              : loanAmount * Math.pow(1 + i_eff, N_term) -
                payment * ((Math.pow(1 + i_eff, N_term) - 1) / i_eff);
        }

        // Build schedule
        const schedule = [];
        let balance = loanAmount;
        let totalInterest = 0;
        const cashFlows = [-loanAmount]; // for IRR: outflow at t=0

        for (let n = 1; n <= N_term; n++) {
          const interest = balance * i_eff;
          let principal = payment - interest;
          if (principal < 0) principal = 0;
          balance = balance + interest - payment;

          // On final period, adjust to hit exact balloon
          if (n === N_term) {
            const desiredBalance = balloon;
            const diff = balance - desiredBalance;
            // Adjust principal and payment
            principal += diff;
            payment += diff;
            balance = desiredBalance;
          }

          totalInterest += interest;
          cashFlows.push(-payment);

          schedule.push({
            period: n,
            payment,
            interest,
            principal,
            balloon: 0,
            balance: Math.max(balance, 0),
          });
        }

        // Add balloon as separate cash flow at end (for IRR)
        if (balloon > 0) {
          cashFlows[cashFlows.length - 1] -= balloon; // last payment includes balloon
          schedule[schedule.length - 1].balloon = balloon;
          schedule[schedule.length - 1].payment += balloon;
          schedule[schedule.length - 1].principal += balloon;
          balance -= balloon;
        }

        const totalPaid = cashFlows.slice(1).reduce((s, cf) => s - cf, 0); // negative cash flows
        const irrPerPeriod = computeIRR(cashFlows);
        const apr = isNaN(irrPerPeriod)
          ? NaN
          : Math.pow(1 + irrPerPeriod, paymentsPerYear) - 1;

        return {
          payment,
          balloon,
          totalPaid,
          totalInterest,
          apr,
          numPayments: N_term,
          schedule,
        };
      }

      function renderResults(res) {
        if (!res) return;
        document.getElementById("resultPayment").textContent = fmtCurrency(
          res.payment
        );
        document.getElementById("resultBalloon").textContent = fmtCurrency(
          res.balloon
        );
        document.getElementById("resultTotalPaid").textContent = fmtCurrency(
          res.totalPaid
        );
        document.getElementById("resultInterest").textContent = fmtCurrency(
          res.totalInterest
        );
        document.getElementById("resultAPR").textContent = isNaN(res.apr)
          ? "—"
          : fmtPercent(res.apr);
        document.getElementById("resultNumPayments").textContent =
          res.numPayments.toString();

        const tbody = document.getElementById("scheduleBody");
        tbody.innerHTML = "";
        res.schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "border-b last:border-b-0";
          tr.innerHTML = `
        <td class="text-left">${row.period}</td>
        <td class="text-right">${fmtCurrency(row.payment)}</td>
        <td class="text-right">${fmtCurrency(row.interest)}</td>
        <td class="text-right">${fmtCurrency(row.principal)}</td>
        <td class="text-right">${
          row.balloon > 0 ? fmtCurrency(row.balloon) : "—"
        }</td>
        <td class="text-right">${fmtCurrency(row.balance)}</td>
      `;
          tbody.appendChild(tr);
        });

        // Enable CSV export
        document.getElementById("exportCsvBtn").disabled = false;
        document.getElementById("exportCsvBtn").dataset.schedule =
          JSON.stringify(res.schedule);
      }

      function exportScheduleCsv() {
        const btn = document.getElementById("exportCsvBtn");
        const dataStr = btn.dataset.schedule;
        if (!dataStr) return;
        const schedule = JSON.parse(dataStr);
        const header = [
          "Period",
          "Payment",
          "Interest",
          "Principal",
          "Balloon",
          "Balance",
        ];
        const rows = [header.join(",")];
        schedule.forEach((r) => {
          rows.push(
            [
              r.period,
              r.payment.toFixed(2),
              r.interest.toFixed(2),
              r.principal.toFixed(2),
              r.balloon.toFixed(2),
              r.balance.toFixed(2),
            ].join(",")
          );
        });
        const blob = new Blob([rows.join("\n")], {
          type: "text/csv;charset=utf-8;",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "balloon-loan-schedule.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      // Tab switching
      document
        .getElementById("tab-by-percent")
        .addEventListener("click", () => {
          document.getElementById("tab-by-percent").classList.add("tab-active");
          document
