    <script>
      function formatCurrency(num) {
        if (!isFinite(num)) return "$0";
        return (
          "$" + num.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }
      function formatPercent(num) {
        if (!isFinite(num)) return "0%";
        return num.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function updatePlanner() {
        const price =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const downPct =
          parseFloat(document.getElementById("downPaymentPct").value) || 0;
        const rateAnnual =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const termYears =
          parseInt(document.getElementById("loanTerm").value, 10) || 30;

        const incomeAnnual =
          parseFloat(document.getElementById("annualIncome").value) || 0;
        const otherDebts =
          parseFloat(document.getElementById("monthlyDebts").value) || 0;

        const taxRate =
          parseFloat(document.getElementById("taxRate").value) || 0;
        const insRate =
          parseFloat(document.getElementById("insuranceRate").value) || 0;
        const hoa =
          parseFloat(document.getElementById("hoaMonthly").value) || 0;

        const rent =
          parseFloat(document.getElementById("expectedRent").value) || 0;
        const vacancy =
          parseFloat(document.getElementById("vacancyRate").value) || 0;
        const opExpPct =
          parseFloat(document.getElementById("operatingExpensePct").value) || 0;

        const downPayment = price * (downPct / 100);
        const loanAmount = Math.max(price - downPayment, 0);
        const r = rateAnnual / 100 / 12;
        const n = termYears * 12;

        let pi = 0;
        if (r > 0 && n > 0) {
          const pow = Math.pow(1 + r, n);
          pi = (loanAmount * (r * pow)) / (pow - 1);
        } else if (n > 0) {
          pi = loanAmount / n;
        }

        const annualTax = price * (taxRate / 100);
        const annualIns = price * (insRate / 100);
        const ti = (annualTax + annualIns) / 12;
        const totalHousing = pi + ti + hoa;

        const totalInterest = pi * n - loanAmount;

        const monthlyIncome = incomeAnnual / 12;
        const frontDTI =
          monthlyIncome > 0 ? (totalHousing / monthlyIncome) * 100 : 0;
        const backDTI =
          monthlyIncome > 0
            ? ((totalHousing + otherDebts) / monthlyIncome) * 100
            : 0;

        let dtiMsg = "";
        if (backDTI === 0 || !isFinite(backDTI)) {
          dtiMsg = "Enter income and debts to see your debt-to-income ratios.";
        } else if (backDTI <= 36) {
          dtiMsg =
            "This scenario is typically considered comfortable for many traditional lenders.";
        } else if (backDTI <= 43) {
          dtiMsg =
            "This is within common maximum DTI limits, but your budget may feel tight.";
        } else {
          dtiMsg =
            "Your DTI is high. Many lenders may see this as risky; consider a lower payment or higher income.";
        }

        const effRent = rent * (1 - vacancy / 100);
        const opExp = effRent * (opExpPct / 100);
        const noiAnnual = (effRent - opExp) * 12;
        const capRate = price > 0 ? (noiAnnual / price) * 100 : 0;
        const debtServiceAnnual = pi * 12;
        const cashFlowAnnual = noiAnnual - debtServiceAnnual;
        const cashInvested = downPayment + price * 0.03; // rough 3% closing cost assumption
        const coc =
          cashInvested > 0 ? (cashFlowAnnual / cashInvested) * 100 : 0;

        document.getElementById("outLoanAmount").textContent = formatCurrency(
          Math.round(loanAmount)
        );
        document.getElementById("outPI").textContent = formatCurrency(
          Math.round(pi)
        );
        document.getElementById("outTI").textContent = formatCurrency(
          Math.round(ti)
        );
        document.getElementById("outHOA").textContent = formatCurrency(
          Math.round(hoa)
        );
        document.getElementById("outTotalHousing").textContent = formatCurrency(
          Math.round(totalHousing)
        );
        document.getElementById("outTotalInterest").textContent =
          formatCurrency(Math.round(totalInterest));

        document.getElementById("outMonthlyIncome").textContent =
          formatCurrency(Math.round(monthlyIncome));
        document.getElementById("outFrontDTI").textContent = isFinite(frontDTI)
          ? formatPercent(frontDTI)
          : "—";
        document.getElementById("outBackDTI").textContent = isFinite(backDTI)
          ? formatPercent(backDTI)
          : "—";
        document.getElementById("outDTIMessage").textContent = dtiMsg;

        document.getElementById("outNOI").textContent = formatCurrency(
          Math.round(noiAnnual)
        );
        document.getElementById("outCapRate").textContent = isFinite(capRate)
          ? formatPercent(capRate)
          : "—";
        document.getElementById("outCashFlow").textContent = formatCurrency(
          Math.round(cashFlowAnnual)
        );
        document.getElementById("outCoC").textContent = isFinite(coc)
          ? formatPercent(coc)
          : "—";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const downSlider = document.getElementById("downPaymentPct");
        const downLabel = document.getElementById("downPaymentPctLabel");
        if (downSlider && downLabel) {
          const syncDown = () => {
            downLabel.textContent = downSlider.value + "%";
          };
          downSlider.addEventListener("input", () => {
            syncDown();
            updatePlanner();
          });
          syncDown();
        }

        const inputs = [
          "homePrice",
          "interestRate",
          "loanTerm",
          "annualIncome",
          "monthlyDebts",
          "taxRate",
          "insuranceRate",
          "hoaMonthly",
          "expectedRent",
          "vacancyRate",
          "operatingExpensePct",
        ];
        inputs.forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("change", updatePlanner);
            el.addEventListener("blur", updatePlanner);
          }
        });

        const btn = document.getElementById("plannerCalculateBtn");
        if (btn)
          btn.addEventListener("click", function (e) {
            e.preventDefault();
            updatePlanner();
          });

        updatePlanner();
      });

