    <script>
      // Tab switching
      const tabAzimuth = document.getElementById("tab-azimuth");
      const tabTwoPoints = document.getElementById("tab-two-points");
      const panelAzimuth = document.getElementById("panel-azimuth");
      const panelTwoPoints = document.getElementById("panel-two-points");

      function activateTab(tab) {
        if (tab === "azimuth") {
          tabAzimuth.classList.add("border-blue-600", "text-blue-600");
          tabAzimuth.classList.remove("text-gray-600");
          tabTwoPoints.classList.remove("border-blue-600", "text-blue-600");
          tabTwoPoints.classList.add("text-gray-600");
          panelAzimuth.classList.remove("hidden");
          panelTwoPoints.classList.add("hidden");
        } else {
          tabTwoPoints.classList.add("border-blue-600", "text-blue-600");
          tabTwoPoints.classList.remove("text-gray-600");
          tabAzimuth.classList.remove("border-blue-600", "text-blue-600");
          tabAzimuth.classList.add("text-gray-600");
          panelTwoPoints.classList.remove("hidden");
          panelAzimuth.classList.add("hidden");
        }
      }

      tabAzimuth.addEventListener("click", () => activateTab("azimuth"));
      tabTwoPoints.addEventListener("click", () => activateTab("two-points"));

      // Utility: normalize angle to 0-360
      function normalizeDegrees(angle) {
        let a = angle % 360;
        if (a < 0) a += 360;
        return a;
      }

      // Azimuth to Bearing
      const azimuthInput = document.getElementById("azimuth-input");
      const btnAzToBearing = document.getElementById("btn-azimuth-to-bearing");
      const bearingOutput = document.getElementById("bearing-output");
      const azimuthError = document.getElementById("azimuth-error");

      // Bearing to Azimuth
      const bearingNS = document.getElementById("bearing-quadrant-ns");
      const bearingEW = document.getElementById("bearing-quadrant-ew");
      const bearingAngleInput = document.getElementById("bearing-angle");
      const btnBearingToAz = document.getElementById("btn-bearing-to-azimuth");
      const azimuthOutput = document.getElementById("azimuth-output");
      const bearingError = document.getElementById("bearing-error");

      // Two-point bearing
      const x1Input = document.getElementById("x1");
      const y1Input = document.getElementById("y1");
      const x2Input = document.getElementById("x2");
      const y2Input = document.getElementById("y2");
      const btnTwoPoint = document.getElementById("btn-two-point-bearing");
      const twoPointAzimuth = document.getElementById("two-point-azimuth");
      const twoPointBearing = document.getElementById("two-point-bearing");
      const twoPointDeltas = document.getElementById("two-point-deltas");
      const twoPointError = document.getElementById("two-point-error");

      // Compass
      const compassNeedle = document.getElementById("compass-needle");
      const compassAzLabel = document.getElementById("compass-azimuth-label");
      const compassBearingLabel = document.getElementById(
        "compass-bearing-label"
      );

      function azimuthToBearingString(az) {
        const A = normalizeDegrees(az);
        if (isNaN(A)) return "—";
        if (A === 0 || A === 360) return "N 0° E";
        if (A === 90) return "E";
        if (A === 180) return "S";
        if (A === 270) return "W";

        let quadrant, angle;
        if (A > 0 && A < 90) {
          quadrant = "N-E";
          angle = A;
        } else if (A > 90 && A < 180) {
          quadrant = "S-E";
          angle = 180 - A;
        } else if (A > 180 && A < 270) {
          quadrant = "S-W";
          angle = A - 180;
        } else {
          // 270 < A < 360
          quadrant = "N-W";
          angle = 360 - A;
        }
        const angleStr = angle.toFixed(4).replace(/\.?0+$/, "");
        switch (quadrant) {
          case "N-E":
            return `N ${angleStr}° E`;
          case "S-E":
            return `S ${angleStr}° E`;
          case "S-W":
            return `S ${angleStr}° W`;
          case "N-W":
            return `N ${angleStr}° W`;
          default:
            return "—";
        }
      }

      function updateCompass(az) {
        if (isNaN(az)) return;
        const A = normalizeDegrees(az);
        compassNeedle.style.transform = `translate(-50%, -100%) rotate(${A}deg)`;
        compassAzLabel.textContent = `${A.toFixed(4).replace(/\.?0+$/, "")}°`;
        compassBearingLabel.textContent = azimuthToBearingString(A);
      }

      btnAzToBearing.addEventListener("click", () => {
        azimuthError.classList.add("hidden");
        const val = parseFloat(azimuthInput.value);
        if (isNaN(val)) {
          azimuthError.textContent = "Please enter a numeric azimuth.";
          azimuthError.classList.remove("hidden");
          return;
        }
        const A = normalizeDegrees(val);
        bearingOutput.textContent = azimuthToBearingString(A);
        updateCompass(A);
      });

      btnBearingToAz.addEventListener("click", () => {
        bearingError.classList.add("hidden");
        const ns = bearingNS.value;
        const ew = bearingEW.value;
        const theta = parseFloat(bearingAngleInput.value);

        if (isNaN(theta)) {
          bearingError.textContent =
            "Please enter a numeric angle between 0° and 90°.";
          bearingError.classList.remove("hidden");
          return;
        }
        if (theta < 0 || theta > 90) {
          bearingError.textContent =
            "Quadrant angle must be between 0° and 90°.";
          bearingError.classList.remove("hidden");
          return;
        }

        let az;
        if (ns === "N" && ew === "E") {
          az = theta;
        } else if (ns === "S" && ew === "E") {
          az = 180 - theta;
        } else if (ns === "S" && ew === "W") {
          az = 180 + theta;
        } else if (ns === "N" && ew === "W") {
          az = 360 - theta;
        } else {
          bearingError.textContent = "Invalid quadrant combination.";
          bearingError.classList.remove("hidden");
          return;
        }

        const azStr = normalizeDegrees(az)
          .toFixed(4)
          .replace(/\.?0+$/, "");
        azimuthOutput.textContent = `${azStr}°`;
        updateCompass(az);
      });

      btnTwoPoint.addEventListener("click", () => {
        twoPointError.classList.add("hidden");
        const x1 = parseFloat(x1Input.value);
        const y1 = parseFloat(y1Input.value);
        const x2 = parseFloat(x2Input.value);
        const y2 = parseFloat(y2Input.value);

        if ([x1, y1, x2, y2].some((v) => isNaN(v))) {
          twoPointError.textContent =
            "Please enter numeric values for all coordinates.";
          twoPointError.classList.remove("hidden");
          return;
        }

        const dE = x2 - x1;
        const dN = y2 - y1;

        if (dE === 0 && dN === 0) {
          twoPointError.textContent =
            "Start and end points are identical; bearing is undefined.";
          twoPointError.classList.remove("hidden");
          return;
        }

        const azRad = Math.atan2(dE, dN); // note: atan2(x, y) for azimuth from north
        let azDeg = (azRad * 180) / Math.PI;
        azDeg = normalizeDegrees(azDeg);

        const azStr = azDeg.toFixed(4).replace(/\.?0+$/, "");
        twoPointAzimuth.textContent = `${azStr}°`;
        twoPointBearing.textContent = azimuthToBearingString(azDeg);
        twoPointDeltas.textContent = `ΔE = ${dE
          .toFixed(4)
          .replace(/\.?0+$/, "")}, ΔN = ${dN.toFixed(4).replace(/\.?0+$/, "")}`;
        updateCompass(azDeg);
      });

      // Simple FAQ toggle (in addition to global script_faq if present)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              symbol.textContent = "−";
            }
          });
        });

      // Initialize compass with 0°
      updateCompass(0);
    </script>

