      // Simple smoothed percentile approximation based on BMI, age, and sex.
      // NOTE: This is an educational approximation, not an official CDC/WHO implementation.
      function approximatePediatricBMIPercentile(ageYears, sex, bmi) {
        // Rough age-dependent "healthy" BMI band (approximate midpoints and spreads)
        // These are heuristic and only for educational visualization.
        const isMale = sex === "male";

        // Define an approximate median BMI curve and standard deviation by age & sex
        // Using simple polynomials / piecewise approximations.
        function medianBMI(age, male) {
          // crude shape: rises in early childhood, dips, then rises in adolescence
          if (male) {
            // parameters tuned by age bands
            if (age < 5) return 15 + 0.3 * (age - 2); // 2–5y
            if (age < 10) return 15.9 + 0.25 * (age - 5); // 5–10y
            if (age < 15) return 17.2 + 0.6 * (age - 10); // 10–15y
            return 20.2 + 0.3 * (age - 15); // 15–20y
          } else {
            if (age < 5) return 15 + 0.25 * (age - 2);
            if (age < 10) return 15.8 + 0.22 * (age - 5);
            if (age < 15) return 17.0 + 0.55 * (age - 10);
            return 20.0 + 0.25 * (age - 15);
          }
        }

        function sdBMI(age, male) {
          // approximate standard deviation; slightly larger in adolescence
          if (age < 5) return 1.1;
          if (age < 10) return 1.3;
          if (age < 15) return 1.7;
          return 2.0;
        }

        const m = medianBMI(ageYears, isMale);
        const s = sdBMI(ageYears, isMale);

        // z-score approximation
        const z = (bmi - m) / s;

        // Convert z-score to percentile using normal CDF approximation
        function normalCDF(z) {
          return 0.5 * (1 + erf(z / Math.SQRT2));
        }

        function erf(x) {
          // Abramowitz and Stegun approximation
          const sign = x < 0 ? -1 : 1;
          x = Math.abs(x);
          const a1 = 0.254829592,
            a2 = -0.284496736,
            a3 = 1.421413741,
            a4 = -1.453152027,
            a5 = 1.061405429,
            p = 0.3275911;
          const t = 1 / (1 + p * x);
          const y =
            1 -
            ((((a5 * t + a4) * t + a3) * t + a2) * t + a1) *
              t *
              Math.exp(-x * x);
          return sign * y;
        }

        let pct = normalCDF(z) * 100;

        // Clamp to [0.1, 99.9] to avoid extremes
        if (pct < 0.1) pct = 0.1;
        if (pct > 99.9) pct = 99.9;

        return pct;
      }

      function categorizePediatricBMI(percentile) {
        if (percentile < 5) return "Underweight";
        if (percentile < 85) return "Healthy weight";
        if (percentile < 95) return "Overweight";
        return "Obesity";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const unitSelect = document.getElementById("unit-system");
        const metricInputs = document.getElementById("metric-inputs");
        const imperialInputs = document.getElementById("imperial-inputs");
        const calculateBtn = document.getElementById("calculate-btn");

        const ageInput = document.getElementById("age");
        const ageError = document.getElementById("age-error");
        const heightError = document.getElementById("height-error");
        const weightError = document.getElementById("weight-error");

        const bmiValueEl = document.getElementById("bmi-value");
        const percentileValueEl = document.getElementById("percentile-value");
        const categoryValueEl = document.getElementById("category-value");
        const percentileMarker = document.getElementById("percentile-marker");
        const interpretationText = document.getElementById(
          "interpretation-text"
        );

        unitSelect.addEventListener("change", () => {
          if (unitSelect.value === "metric") {
            metricInputs.classList.remove("hidden");
            imperialInputs.classList.add("hidden");
          } else {
            metricInputs.classList.add("hidden");
            imperialInputs.classList.remove("hidden");
          }
        });

        function validateInputs() {
          let valid = true;
          const age = parseFloat(ageInput.value);

          ageError.classList.add("hidden");
          heightError.classList.add("hidden");
          weightError.classList.add("hidden");

          if (isNaN(age) || age < 2 || age > 20) {
            ageError.classList.remove("hidden");
            valid = false;
          }

          if (unitSelect.value === "metric") {
            const h = parseFloat(document.getElementById("height-cm").value);
            const w = parseFloat(document.getElementById("weight-kg").value);
            if (isNaN(h) || h < 40 || h > 220) {
              heightError.classList.remove("hidden");
              valid = false;
            }
            if (isNaN(w) || w < 5 || w > 200) {
              weightError.classList.remove("hidden");
              valid = false;
            }
          } else {
            const ft = parseFloat(document.getElementById("height-ft").value);
            const inch = parseFloat(document.getElementById("height-in").value);
            const wlb = parseFloat(document.getElementById("weight-lb").value);
            const totalIn =
              (isNaN(ft) ? 0 : ft * 12) + (isNaN(inch) ? 0 : inch);
            if (isNaN(totalIn) || totalIn < 20 || totalIn > 90) {
              heightError.classList.remove("hidden");
              valid = false;
            }
            if (isNaN(wlb) || wlb < 10 || wlb > 440) {
              weightError.classList.remove("hidden");
              valid = false;
            }
          }

          return valid;
        }

        function calculate() {
          if (!validateInputs()) return;

          const age = parseFloat(ageInput.value);
          const sex = document.querySelector('input[name="sex"]:checked').value;

          let bmi = null;

          if (unitSelect.value === "metric") {
            const hCm = parseFloat(document.getElementById("height-cm").value);
            const wKg = parseFloat(document.getElementById("weight-kg").value);
            const hM = hCm / 100;
            bmi = wKg / (hM * hM);
          } else {
            const ft =
              parseFloat(document.getElementById("height-ft").value) || 0;
            const inch =
              parseFloat(document.getElementById("height-in").value) || 0;
            const totalIn = ft * 12 + inch;
            const wLb = parseFloat(document.getElementById("weight-lb").value);
            bmi = (wLb / (totalIn * totalIn)) * 703;
          }

          if (!isFinite(bmi) || bmi <= 0) return;

          const percentile = approximatePediatricBMIPercentile(age, sex, bmi);
          const category = categorizePediatricBMI(percentile);

          bmiValueEl.textContent = bmi.toFixed(1);
          percentileValueEl.textContent = percentile.toFixed(1) + "th";
          categoryValueEl.textContent = category;

          // Update marker position (0–100%)
          const marker = percentileMarker;
          marker.classList.remove("hidden");
          const pctClamped = Math.max(0, Math.min(100, percentile));
          marker.style.left = pctClamped + "%";
          marker.style.transform = "translateX(-50%)";

          // Interpretation text
          let interp = `This child’s BMI is approximately ${bmi.toFixed(
            1
          )} kg/m², which corresponds to about the ${percentile.toFixed(
            1
          )}th percentile for age and sex. `;
          if (category === "Underweight") {
            interp +=
              "This falls in the underweight range (below the 5th percentile). Discuss this result with a pediatrician, especially if there are concerns about growth, appetite, or health.";
          } else if (category === "Healthy weight") {
            interp +=
              "This is within the commonly used healthy weight range (5th to less than 85th percentile). Continue to support balanced nutrition, regular physical activity, and adequate sleep.";
          } else if (category === "Overweight") {
            interp +=
              "This is in the overweight range (85th to less than 95th percentile). A pediatrician can help review growth trends, lifestyle, and any health risks, and suggest supportive changes if needed.";
          } else {
            interp +=
              "This is in the obesity range (95th percentile or higher). Professional evaluation is recommended to assess overall health, growth pattern, and to plan appropriate, family-centered support.";
          }
          interp +=
            " This calculator is for educational purposes only and does not replace professional medical advice or official growth charts.";
          interpretationText.textContent = interp;
        }

        calculateBtn.addEventListener("click", calculate);
      });
    </script>

