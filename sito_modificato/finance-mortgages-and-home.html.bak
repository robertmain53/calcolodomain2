    <script>
      // Quick Mortgage Estimator Logic
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function syncDownPaymentFromPct() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const downPct =
          parseFloat(document.getElementById("downPct").value) || 0;
        const downPayment = homePrice * (downPct / 100);
        document.getElementById("downPayment").value = downPayment.toFixed(0);
      }

      function syncDownPctFromPayment() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const downPayment =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const downPct = homePrice > 0 ? (downPayment / homePrice) * 100 : 0;
        document.getElementById("downPct").value = downPct.toFixed(1);
      }

      function calculateQuickMortgage() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const downPayment =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const years =
          parseInt(document.getElementById("loanTerm").value, 10) || 30;

        const loanAmount = Math.max(homePrice - downPayment, 0);
        const monthlyRate = rate / 100 / 12;
        const n = years * 12;

        let monthly = 0;
        if (monthlyRate === 0) {
          monthly = loanAmount / n;
        } else {
          const pow = Math.pow(1 + monthlyRate, n);
          monthly = (loanAmount * (monthlyRate * pow)) / (pow - 1);
        }

        const totalPaid = monthly * n;
        const totalInterest = totalPaid - loanAmount;

        document.getElementById("quick-loan-amount").textContent =
          formatCurrency(loanAmount);
        document.getElementById("quick-monthly").textContent =
          formatCurrency(monthly);
        document.getElementById("quick-total-interest").textContent =
          formatCurrency(totalInterest);
        document.getElementById("quick-total-paid").textContent =
          formatCurrency(totalPaid);
        document.getElementById("quick-term-label").textContent =
          years + " years (" + n + " payments)";
        document.getElementById("quick-results").classList.remove("hidden");
      }

      // Mini Affordability Logic
      function calculateMiniAffordability() {
        const income =
          parseFloat(document.getElementById("miniIncome").value) || 0;
        const debts =
          parseFloat(document.getElementById("miniDebts").value) || 0;
        const rate = parseFloat(document.getElementById("miniRate").value) || 0;
        const downPct =
          parseFloat(document.getElementById("miniDownPct").value) || 0;

        const targetDTI = 0.43; // 43%
        const maxTotalDebt = income * targetDTI;
        const maxMortgagePayment = Math.max(maxTotalDebt - debts, 0);

        const monthlyRate = rate / 100 / 12;
        const years = 30;
        const n = years * 12;

        let loanAmount = 0;
        if (monthlyRate === 0) {
          loanAmount = maxMortgagePayment * n;
        } else {
          const pow = Math.pow(1 + monthlyRate, n);
          loanAmount = (maxMortgagePayment * (pow - 1)) / (monthlyRate * pow);
        }

        const homePrice = loanAmount / (1 - downPct / 100);

        document.getElementById("mini-max-payment").textContent =
          formatCurrency(maxMortgagePayment);
        document.getElementById("mini-home-price").textContent = isFinite(
          homePrice
        )
          ? formatCurrency(homePrice)
          : "$0";
        document.getElementById("mini-dti-target").textContent =
          (targetDTI * 100).toFixed(0) + "%";
        document
          .getElementById("mini-afford-results")
          .classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", function () {
        const homePriceInput = document.getElementById("homePrice");
        const downPaymentInput = document.getElementById("downPayment");
        const downPctInput = document.getElementById("downPct");
        const quickBtn = document.getElementById("quick-calc-btn");
        const miniBtn = document.getElementById("mini-afford-btn");

        if (homePriceInput && downPaymentInput && downPctInput) {
          homePriceInput.addEventListener("input", syncDownPaymentFromPct);
          downPctInput.addEventListener("input", syncDownPaymentFromPct);
          downPaymentInput.addEventListener("input", syncDownPctFromPayment);
        }

        if (quickBtn) {
          quickBtn.addEventListener("click", calculateQuickMortgage);
        }

        if (miniBtn) {
          miniBtn.addEventListener("click", calculateMiniAffordability);
        }

        // Initial sync
        syncDownPaymentFromPct();
      });
    </script>

