    <script>
      // Tab switching
      const tabs = document.querySelectorAll("[data-tab]");
      const panels = {
        stitch: document.getElementById("panel-stitch"),
        pricing: document.getElementById("panel-pricing"),
        cross: document.getElementById("panel-cross"),
      };
      tabs.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabs.forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          Object.keys(panels).forEach((key) => {
            panels[key].classList.toggle("hidden", key !== target);
          });
        });
      });

      // FAQ toggle (simple fallback if global script not active)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.nextElementSibling;
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-question + div")
              .forEach((div) => div.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              symbol.textContent = "−";
            }
          });
        });

      // Utility functions
      function toInches(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v) || v <= 0) return 0;
        return unit === "cm" ? v / 2.54 : v;
      }
      function formatNumber(num, decimals = 1) {
        if (!isFinite(num)) return "0";
        return num.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: decimals,
        });
      }
      function formatMoney(num) {
        if (!isFinite(num)) return "$0.00";
        return "$" + num.toFixed(2);
      }

      // Stitch & Time calculation
      const stitchKnownCheckbox = document.getElementById("stitch-known");
      const groupStitchKnown = document.getElementById("group-stitch-known");
      const groupStitchEstimate = document.getElementById(
        "group-stitch-estimate"
      );

      stitchKnownCheckbox.addEventListener("change", () => {
        const known = stitchKnownCheckbox.checked;
        groupStitchKnown.classList.toggle("hidden", !known);
        groupStitchEstimate.classList.toggle("hidden", known);
      });

      document
        .getElementById("btn-calc-stitch")
        .addEventListener("click", () => {
          const quantity = Math.max(
            1,
            parseInt(document.getElementById("quantity").value, 10) || 1
          );
          let stitches;

          if (stitchKnownCheckbox.checked) {
            stitches = Math.max(
              1,
              parseInt(
                document.getElementById("stitch-count-known").value,
                10
              ) || 0
            );
          } else {
            const wIn = toInches(
              document.getElementById("design-width").value,
              document.getElementById("design-width-unit").value
            );
            const hIn = toInches(
              document.getElementById("design-height").value,
              document.getElementById("design-height-unit").value
            );
            const area = wIn * hIn;
            const density = Math.max(
              100,
              parseFloat(document.getElementById("stitch-density").value) || 0
            );
            stitches = Math.round(area * density);
            document.getElementById("out-area").textContent =
              formatNumber(area, 2) + " in²";
          }

          const spm = Math.max(
            50,
            parseFloat(document.getElementById("spm").value) || 0
          );
          const eff = Math.min(
            1,
            Math.max(
              0.1,
              parseFloat(document.getElementById("efficiency").value) || 0.8
            )
          );
          const hoopTime = Math.max(
            0,
            parseFloat(document.getElementById("hoop-time").value) || 0
          );
          const setupTime = Math.max(
            0,
            parseFloat(document.getElementById("setup-time").value) || 0
          );

          const effectiveSpm = spm * eff;
          const runTimePerPieceMin = stitches / effectiveSpm;
          const totalRunTimeMin = runTimePerPieceMin * quantity;
          const totalHoopTimeMin = hoopTime * quantity;
          const totalJobTimeMin =
            totalRunTimeMin + totalHoopTimeMin + setupTime;

          // Thread usage estimate (m)
          const threadMeters = stitches * 0.005; // simple rule of thumb

          // Hoop suggestion based on design size
          let wIn = toInches(
            document.getElementById("design-width").value,
            document.getElementById("design-width-unit").value
          );
          let hIn = toInches(
            document.getElementById("design-height").value,
            document.getElementById("design-height-unit").value
          );
          if (stitchKnownCheckbox.checked) {
            // if only stitches known, assume 3x3" as neutral
            if (!wIn || !hIn) {
              wIn = 3;
              hIn = 3;
            }
          }
          const margin = 0.5;
          const needW = wIn + margin;
          const needH = hIn + margin;
          const hoops = [
            { w: 4, h: 4 },
            { w: 5, h: 7 },
            { w: 6, h: 10 },
            { w: 8, h: 12 },
            { w: 10, h: 16 },
          ];
          let hoopText = "Custom hoop required";
          for (const hoop of hoops) {
            if (
              (needW <= hoop.w && needH <= hoop.h) ||
              (needW <= hoop.h && needH <= hoop.w)
            ) {
              hoopText = `${hoop.w}" × ${hoop.h}"`;
              break;
            }
          }

          document.getElementById("out-stitches").textContent =
            stitches.toLocaleString();
          if (!stitchKnownCheckbox.checked) {
            const area = wIn * hIn;
            document.getElementById("out-area").textContent =
              formatNumber(area, 2) + " in²";
          }
          document.getElementById("out-hoop").textContent = hoopText;
          document.getElementById("out-time-piece").textContent =
            formatNumber(runTimePerPieceMin, 1) + " min";
          document.getElementById("out-time-total").textContent =
            formatNumber(totalRunTimeMin / 60, 2) + " h";
          document.getElementById("out-time-job").textContent =
            formatNumber(totalJobTimeMin / 60, 2) + " h";
          document.getElementById("out-thread").textContent =
            formatNumber(threadMeters, 1) + " m";

          // Store for pricing panel
          window.embCalc = window.embCalc || {};
          window.embCalc.stitches = stitches;
          window.embCalc.totalJobMinutes = totalJobTimeMin;
          window.embCalc.quantity = quantity;
        });

      // Pricing calculation
      document
        .getElementById("btn-use-stitch")
        .addEventListener("click", () => {
          if (window.embCalc && window.embCalc.stitches) {
            document.getElementById("price-stitches").value =
              window.embCalc.stitches;
          }
          if (window.embCalc && window.embCalc.quantity) {
            document.getElementById("price-qty").value =
              window.embCalc.quantity;
          }
        });

      document.getElementById("btn-use-time").addEventListener("click", () => {
        if (window.embCalc && window.embCalc.totalJobMinutes) {
          document.getElementById("price-setup-min").value =
            window.embCalc.totalJobMinutes.toFixed(1);
        }
      });

      document
        .getElementById("btn-calc-price")
        .addEventListener("click", () => {
          const stitches = Math.max(
            1,
            parseInt(document.getElementById("price-stitches").value, 10) || 0
          );
          const qty = Math.max(
            1,
            parseInt(document.getElementById("price-qty").value, 10) || 1
          );
          const hourly = Math.max(
            1,
            parseFloat(document.getElementById("price-hourly").value) || 0
          );
          const threadPerThousand = Math.max(
            0,
            parseFloat(document.getElementById("price-thread").value) || 0
          );
          const garmentCost = Math.max(
            0,
            parseFloat(document.getElementById("price-garment").value) || 0
          );
          const totalMinutes = Math.max(
            0,
            parseFloat(document.getElementById("price-setup-min").value) || 0
          );
          const digitizing = Math.max(
            0,
            parseFloat(document.getElementById("price-digitizing").value) || 0
          );
          const markupPct =
            Math.max(
              0,
              parseFloat(document.getElementById("price-markup").value) || 0
            ) / 100;

          const laborCost = (totalMinutes / 60) * hourly;
          const threadCost = (stitches / 1000) * threadPerThousand;
          const garmentTotal = garmentCost * qty;
          const baseCost = laborCost + threadCost + garmentTotal;
          const basePerPiece = baseCost / qty;
          const pricePerPiece = basePerPiece * (1 + markupPct);
          const pricePerPieceFull =
            ((baseCost + digitizing) / qty) * (1 + markupPct);
          const totalPrice = (baseCost + digitizing) * (1 + markupPct);

          document.getElementById("out-labor").textContent =
            formatMoney(laborCost);
          document.getElementById("out-thread-cost").textContent =
            formatMoney(threadCost);
          document.getElementById("out-garment-cost").textContent =
            formatMoney(garmentTotal);
          document.getElementById("out-digitizing-cost").textContent =
            formatMoney(digitizing);
          document.getElementById("out-base-per-piece").textContent =
            formatMoney(basePerPiece);
          document.getElementById("out-price-per-piece").textContent =
            formatMoney(pricePerPiece);
          document.getElementById("out-price-per-piece-full").textContent =
            formatMoney(pricePerPieceFull);
          document.getElementById("out-price-total").textContent =
            formatMoney(totalPrice);
        });

      // Cross-stitch calculation
      document
        .getElementById("btn-calc-cross")
        .addEventListener("click", () => {
          const wSt = Math.max(
            1,
            parseInt(
              document.getElementById("cross-stitches-wide").value,
              10
            ) || 0
          );
          const hSt = Math.max(
            1,
            parseInt(
              document.getElementById("cross-stitches-high").value,
              10
            ) || 0
          );
          const count = Math.max(
            4,
            parseInt(document.getElementById("cross-count").value, 10) || 0
          );
          const strands = Math.max(
            1,
            parseInt(document.getElementById("cross-threads").value, 10) || 1
          );
          const speed = Math.max(
            10,
            parseFloat(document.getElementById("cross-speed").value) || 0
          );

          const widthIn = wSt / count;
          const heightIn = hSt / count;
          const totalStitches = wSt * hSt;
          const timeMin = totalStitches / speed;

          // floss length estimate: 0.5 cm per stitch per strand
          const flossMeters = totalStitches * strands * 0.005;

          document.getElementById("cross-size").textContent = `${formatNumber(
            widthIn,
            2
          )}" × ${formatNumber(heightIn, 2)}"`;
          document.getElementById("cross-total-stitches").textContent =
            totalStitches.toLocaleString();
          document.getElementById("cross-floss").textContent =
            formatNumber(flossMeters, 1) + " m";
          document.getElementById("cross-time").textContent =
            formatNumber(timeMin / 60, 2) + " h";
        });

      // Initialize with a first calculation
      document.getElementById("btn-calc-stitch").click();
    </script>

