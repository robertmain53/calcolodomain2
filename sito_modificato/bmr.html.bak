    <script>
      // BMR calculator logic
      (function () {
        const unitMetricBtn = document.getElementById("unit-metric");
        const unitImperialBtn = document.getElementById("unit-imperial");

        const heightMetricGroup = document.getElementById(
          "height-metric-group"
        );
        const heightImperialGroup = document.getElementById(
          "height-imperial-group"
        );
        const weightMetricGroup = document.getElementById(
          "weight-metric-group"
        );
        const weightImperialGroup = document.getElementById(
          "weight-imperial-group"
        );

        const ageInput = document.getElementById("age");
        const sexInput = document.getElementById("sex");
        const heightCmInput = document.getElementById("height-cm");
        const heightFtInput = document.getElementById("height-ft");
        const heightInInput = document.getElementById("height-in");
        const weightKgInput = document.getElementById("weight-kg");
        const weightLbInput = document.getElementById("weight-lb");
        const bodyfatInput = document.getElementById("bodyfat");
        const activityInput = document.getElementById("activity");
        const goalInput = document.getElementById("goal");

        const errorEl = document.getElementById("bmr-error");
        const resultsSection = document.getElementById("results-section");

        const bmrMifflinEl = document.getElementById("bmr-mifflin");
        const bmrHbEl = document.getElementById("bmr-hb");
        const bmrKmEl = document.getElementById("bmr-km");
        const bmrKmCard = document.getElementById("bmr-km-card");

        const tdeeEl = document.getElementById("tdee");
        const targetCaloriesEl = document.getElementById("target-calories");
        const weeklyChangeEl = document.getElementById("weekly-change");
        const dailyDeltaEl = document.getElementById("daily-delta");

        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        let currentUnit = "metric";

        function setUnits(unit) {
          currentUnit = unit;
          if (unit === "metric") {
            unitMetricBtn.classList.add("bg-blue-600", "text-white");
            unitMetricBtn.classList.remove("bg-white", "text-gray-700");
            unitImperialBtn.classList.remove("bg-blue-600", "text-white");
            unitImperialBtn.classList.add("bg-white", "text-gray-700");

            heightMetricGroup.classList.remove("hidden");
            heightImperialGroup.classList.add("hidden");
            weightMetricGroup.classList.remove("hidden");
            weightImperialGroup.classList.add("hidden");
          } else {
            unitImperialBtn.classList.add("bg-blue-600", "text-white");
            unitImperialBtn.classList.remove("bg-white", "text-gray-700");
            unitMetricBtn.classList.remove("bg-blue-600", "text-white");
            unitMetricBtn.classList.add("bg-white", "text-gray-700");

            heightMetricGroup.classList.add("hidden");
            heightImperialGroup.classList.remove("hidden");
            weightMetricGroup.classList.add("hidden");
            weightImperialGroup.classList.remove("hidden");
          }
        }

        unitMetricBtn.addEventListener("click", function () {
          if (currentUnit === "imperial") {
            // convert existing imperial to metric for continuity
            const hFt = parseFloat(heightFtInput.value) || 0;
            const hIn = parseFloat(heightInInput.value) || 0;
            const totalIn = hFt * 12 + hIn;
            if (totalIn > 0) {
              heightCmInput.value = (totalIn * 2.54).toFixed(0);
            }
            const wLb = parseFloat(weightLbInput.value) || 0;
            if (wLb > 0) {
              weightKgInput.value = (wLb * 0.45359237).toFixed(1);
            }
          }
          setUnits("metric");
        });

        unitImperialBtn.addEventListener("click", function () {
          if (currentUnit === "metric") {
            const hCm = parseFloat(heightCmInput.value) || 0;
            if (hCm > 0) {
              const totalIn = hCm / 2.54;
              const ft = Math.floor(totalIn / 12);
              const inch = Math.round(totalIn - ft * 12);
              heightFtInput.value = ft;
              heightInInput.value = inch;
            }
            const wKg = parseFloat(weightKgInput.value) || 0;
            if (wKg > 0) {
              weightLbInput.value = (wKg / 0.45359237).toFixed(1);
            }
          }
          setUnits("imperial");
        });

        function getMetricValues() {
          let heightCm, weightKg;

          if (currentUnit === "metric") {
            heightCm = parseFloat(heightCmInput.value);
            weightKg = parseFloat(weightKgInput.value);
          } else {
            const hFt = parseFloat(heightFtInput.value);
            const hIn = parseFloat(heightInInput.value);
            const wLb = parseFloat(weightLbInput.value);
            const totalIn =
              (isNaN(hFt) ? 0 : hFt) * 12 + (isNaN(hIn) ? 0 : hIn);
            heightCm = totalIn * 2.54;
            weightKg = (isNaN(wLb) ? 0 : wLb) * 0.45359237;
          }

          return { heightCm, weightKg };
        }

        function calculateBmr() {
          errorEl.classList.add("hidden");

          const age = parseFloat(ageInput.value);
          const sex = sexInput.value;
          const { heightCm, weightKg } = getMetricValues();
          const bodyfat = parseFloat(bodyfatInput.value);
          const activityFactor = parseFloat(activityInput.value);

          if (
            !age ||
            age <= 0 ||
            !heightCm ||
            heightCm <= 0 ||
            !weightKg ||
            weightKg <= 0
          ) {
            errorEl.classList.remove("hidden");
            resultsSection.classList.add("hidden");
            return;
          }

          // Mifflin-St Jeor
          let bmrMifflin;
          if (sex === "male") {
            bmrMifflin = 10 * weightKg + 6.25 * heightCm - 5 * age + 5;
          } else {
            bmrMifflin = 10 * weightKg + 6.25 * heightCm - 5 * age - 161;
          }

          // Revised Harris-Benedict
          let bmrHb;
          if (sex === "male") {
            bmrHb = 13.397 * weightKg + 4.799 * heightCm - 5.677 * age + 88.362;
          } else {
            bmrHb = 9.247 * weightKg + 3.098 * heightCm - 4.33 * age + 447.593;
          }

          // Katch-McArdle (if body fat provided)
          let bmrKm = null;
          if (!isNaN(bodyfat) && bodyfat > 0 && bodyfat < 70) {
            const lbm = weightKg * (1 - bodyfat / 100);
            bmrKm = 370 + 21.6 * lbm;
            bmrKmCard.classList.remove("opacity-50");
          } else {
            bmrKmCard.classList.add("opacity-50");
          }

          // Use Mifflin for TDEE and goals
          const tdee = bmrMifflin * activityFactor;

          let target = tdee;
          let weeklyChangeKg = 0;
          let dailyDelta = 0;

          // Approx: 7700 kcal per kg of fat
          const kcalPerKg = 7700;

          switch (goalInput.value) {
            case "loss-mild":
              dailyDelta = -250;
              break;
            case "loss":
              dailyDelta = -500;
              break;
            case "gain-mild":
              dailyDelta = 250;
              break;
            case "gain":
              dailyDelta = 500;
              break;
            default:
              dailyDelta = 0;
          }

          target = tdee + dailyDelta;
          weeklyChangeKg = (dailyDelta * 7) / kcalPerKg;

          // Update UI
          bmrMifflinEl.textContent = Math.round(bmrMifflin);
          bmrHbEl.textContent = Math.round(bmrHb);
          bmrKmEl.textContent = bmrKm ? Math.round(bmrKm) : "—";

          tdeeEl.textContent = Math.round(tdee);
          targetCaloriesEl.textContent = Math.round(target);

          if (weeklyChangeKg === 0) {
            weeklyChangeEl.textContent = "≈ 0 kg/week (maintenance)";
          } else if (weeklyChangeKg < 0) {
            weeklyChangeEl.textContent =
              "≈ " + weeklyChangeKg.toFixed(2) + " kg/week loss";
          } else {
            weeklyChangeEl.textContent =
              "≈ +" + weeklyChangeKg.toFixed(2) + " kg/week gain";
          }

          if (dailyDelta === 0) {
            dailyDeltaEl.textContent = "0";
          } else {
            dailyDeltaEl.textContent =
              (dailyDelta > 0 ? "+" : "") + dailyDelta.toFixed(0);
          }

          resultsSection.classList.remove("hidden");
        }

        calcBtn.addEventListener("click", calculateBmr);

        resetBtn.addEventListener("click", function () {
          setTimeout(function () {
            setUnits("metric");
            ageInput.value = 30;
            heightCmInput.value = 175;
            weightKgInput.value = 70;
            heightFtInput.value = 5;
            heightInInput.value = 9;
            weightLbInput.value = 154;
            bodyfatInput.value = "";
            activityInput.value = "1.55";
            goalInput.value = "maintain";
            resultsSection.classList.add("hidden");
            errorEl.classList.add("hidden");
          }, 0);
        });

        // Initialize
        setUnits("metric");
      })();

      // Simple FAQ toggle (in addition to global script_faq if present)
      document.addEventListener("DOMContentLoaded", function () {
        const faqButtons = document.querySelectorAll(
          "#faq-container .faq-question"
        );
        faqButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            if (isHidden) {
              answer.classList.remove("hidden");
            }
          });
        });
      });

