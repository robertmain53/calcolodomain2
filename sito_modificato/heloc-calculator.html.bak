    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        const absVal = Math.abs(value);
        const options = {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: absVal >= 1000 ? 0 : 2,
        };
        return new Intl.NumberFormat("en-US", options).format(value);
      }

      // Utility: safe number
      function toNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }

      // Tab switching
      const tabBorrow = document.getElementById("tab-borrow");
      const tabPayment = document.getElementById("tab-payment");
      const panelBorrow = document.getElementById("panel-borrow");
      const panelPayment = document.getElementById("panel-payment");

      function activateTab(tab) {
        if (tab === "borrow") {
          tabBorrow.classList.remove("text-gray-500", "border-transparent");
          tabBorrow.classList.add("border-blue-500", "text-blue-600");
          tabPayment.classList.remove("border-blue-500", "text-blue-600");
          tabPayment.classList.add("text-gray-500", "border-transparent");
          panelBorrow.classList.remove("hidden");
          panelPayment.classList.add("hidden");
        } else {
          tabPayment.classList.remove("text-gray-500", "border-transparent");
          tabPayment.classList.add("border-blue-500", "text-blue-600");
          tabBorrow.classList.remove("border-blue-500", "text-blue-600");
          tabBorrow.classList.add("text-gray-500", "border-transparent");
          panelPayment.classList.remove("hidden");
          panelBorrow.classList.add("hidden");
        }
      }

      tabBorrow.addEventListener("click", () => activateTab("borrow"));
      tabPayment.addEventListener("click", () => activateTab("payment"));

      // Borrowing capacity calculations
      function updateBorrowingCapacity() {
        const homeValue = Math.max(0, toNumber("homeValue"));
        const mortgageBalance = Math.max(0, toNumber("mortgageBalance"));
        const cltv = Math.max(
          0,
          parseFloat(document.getElementById("maxCltv").value) || 0
        );
        const rate = Math.max(
          0,
          parseFloat(document.getElementById("helocRateBorrow").value) || 0
        );

        const availableEquity = Math.max(0, homeValue - mortgageBalance);
        const maxTotalDebt = homeValue * (cltv / 100);
        const maxHeloc = Math.max(0, maxTotalDebt - mortgageBalance);

        const monthlyRate = rate / 100 / 12;
        const interestOnlyPayment = maxHeloc * monthlyRate;

        document.getElementById("maxCltvOutput").textContent =
          cltv.toFixed(0) + "%";
        document.getElementById("helocRateBorrowOutput").textContent =
          rate.toFixed(2) + "%";

        document.getElementById("availableEquity").textContent =
          formatCurrency(availableEquity);
        document.getElementById("maxHelocLimit").textContent =
          formatCurrency(maxHeloc);
        document.getElementById("interestOnlyPaymentBorrow").textContent =
          formatCurrency(interestOnlyPayment) + "/mo";
      }

      // Payment & payoff calculations
      function updatePayments() {
        const drawAmount = Math.max(0, toNumber("helocLimit"));
        const rate = Math.max(
          0,
          parseFloat(document.getElementById("helocRate").value) || 0
        );
        const drawYears = Math.max(
          1,
          parseInt(document.getElementById("drawYears").value, 10) || 0
        );
        const repayYears = Math.max(
          1,
          parseInt(document.getElementById("repayYears").value, 10) || 0
        );
        const utilization = Math.max(
          0,
          parseFloat(document.getElementById("utilization").value) || 0
        );

        const monthlyRate = rate / 100 / 12;
        const avgBalance = drawAmount * (utilization / 100);

        const interestOnlyPayment = avgBalance * monthlyRate;
        const totalInterestDraw = interestOnlyPayment * drawYears * 12;

        // Assume remaining balance at start of repayment equals drawAmount
        const n = repayYears * 12;
        let piPayment = 0;
        if (monthlyRate === 0) {
          piPayment = n > 0 ? drawAmount / n : 0;
        } else {
          const pow = Math.pow(1 + monthlyRate, n);
          piPayment = (drawAmount * (monthlyRate * pow)) / (pow - 1);
        }
        const totalInterestRepay = piPayment * n - drawAmount;
        const totalInterestAll = totalInterestDraw + totalInterestRepay;

        document.getElementById("helocRateOutput").textContent =
          rate.toFixed(2) + "%";
        document.getElementById("drawYearsOutput").textContent =
          drawYears + " year" + (drawYears !== 1 ? "s" : "");
        document.getElementById("repayYearsOutput").textContent =
          repayYears + " year" + (repayYears !== 1 ? "s" : "");
        document.getElementById("utilizationOutput").textContent =
          utilization.toFixed(0) + "%";

        document.getElementById("interestOnlyPayment").textContent =
          formatCurrency(interestOnlyPayment) + "/mo";
        document.getElementById("piPayment").textContent =
          formatCurrency(piPayment) + "/mo";
        document.getElementById("totalInterestDraw").textContent =
          formatCurrency(totalInterestDraw);
        document.getElementById("totalInterestRepay").textContent =
          formatCurrency(totalInterestRepay);
        document.getElementById("totalInterestAll").textContent =
          formatCurrency(totalInterestAll);
      }

      // Attach listeners
      ["homeValue", "mortgageBalance"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateBorrowingCapacity);
      });
      ["maxCltv", "helocRateBorrow"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateBorrowingCapacity);
      });

      ["helocLimit"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updatePayments);
      });
      ["helocRate", "drawYears", "repayYears", "utilization"].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updatePayments);
      });

      // Initial calculations
      document.addEventListener("DOMContentLoaded", () => {
        updateBorrowingCapacity();
        updatePayments();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
