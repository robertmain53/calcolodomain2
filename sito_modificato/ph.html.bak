    <script>
      // Simple empirical Kw(T) approximation (valid roughly 0–60 °C)
      function kwAtTempC(Tc) {
        // log10(Kw) ≈ -14.94 + 0.0335*T - 0.000061*T^2 (rough fit)
        const t = Tc;
        const log10Kw = -14.94 + 0.0335 * t - 0.000061 * t * t;
        return Math.pow(10, log10Kw);
      }

      function formatNumber(val, digits = 4) {
        if (!isFinite(val)) return "–";
        const abs = Math.abs(val);
        if (abs === 0) return "0";
        if (abs >= 1e-3 && abs < 1e4) {
          return val.toFixed(digits).replace(/\.?0+$/, "");
        }
        return val.toExponential(3).replace("+", "");
      }

      function classifyPH(ph, pKw) {
        if (!isFinite(ph))
          return { label: "–", cls: "bg-gray-200 text-gray-800" };
        const neutral = pKw / 2;
        const eps = 0.05;
        if (ph < neutral - eps) {
          if (ph < neutral - 3)
            return { label: "strong acid", cls: "bg-red-100 text-red-800" };
          return { label: "acidic", cls: "bg-orange-100 text-orange-800" };
        } else if (ph > neutral + eps) {
          if (ph > neutral + 3)
            return { label: "strong base", cls: "bg-blue-100 text-blue-800" };
          return { label: "basic", cls: "bg-green-100 text-green-800" };
        }
        return { label: "neutral", cls: "bg-emerald-100 text-emerald-800" };
      }

      function updateIndicator(ph) {
        const indicator = document.getElementById("ph-indicator");
        if (!indicator) return;
        if (!isFinite(ph)) {
          indicator.style.left = "50%";
          return;
        }
        // Map pH 0–14 to 0–100%; clamp
        const clamped = Math.max(0, Math.min(14, ph));
        const pct = (clamped / 14) * 100;
        indicator.style.left = pct + "%";
      }

      function updateKwDisplay(kw) {
        const el = document.getElementById("res-kw");
        if (!el) return;
        const pKw = -Math.log10(kw);
        el.innerHTML =
          "K<sub>w</sub> ≈ " +
          formatNumber(kw, 3) +
          " (pK<sub>w</sub> ≈ " +
          formatNumber(pKw, 3) +
          ")";
      }

      function calculate() {
        const type = document.getElementById("input-type").value;
        const valStr = document.getElementById("input-value").value.trim();
        const tempStr = document.getElementById("temp").value.trim();
        const errEl = document.getElementById("error-msg");

        errEl.classList.add("hidden");
        errEl.textContent = "";

        if (!valStr) {
          errEl.textContent = "Please enter a value to calculate.";
          errEl.classList.remove("hidden");
          return;
        }

        let val = Number(valStr);
        if (!isFinite(val)) {
          errEl.textContent =
            "Please enter a valid numeric value (you can use scientific notation like 1e-4).";
          errEl.classList.remove("hidden");
          return;
        }

        let T = Number(tempStr);
        if (!isFinite(T)) T = 25;
        const Kw = kwAtTempC(T);
        const pKw = -Math.log10(Kw);
        updateKwDisplay(Kw);

        let pH, pOH, H, OH;

        try {
          if (type === "ph") {
            pH = val;
            H = Math.pow(10, -pH);
            OH = Kw / H;
            pOH = -Math.log10(OH);
          } else if (type === "poh") {
            pOH = val;
            OH = Math.pow(10, -pOH);
            H = Kw / OH;
            pH = -Math.log10(H);
          } else if (type === "h") {
            H = val;
            if (H <= 0) throw new Error("Concentration must be positive.");
            pH = -Math.log10(H);
            OH = Kw / H;
            pOH = -Math.log10(OH);
          } else if (type === "oh") {
            OH = val;
            if (OH <= 0) throw new Error("Concentration must be positive.");
            pOH = -Math.log10(OH);
            H = Kw / OH;
            pH = -Math.log10(H);
          }
        } catch (e) {
          errEl.textContent =
            e.message || "Unable to perform calculation with the given inputs.";
          errEl.classList.remove("hidden");
          return;
        }

        // Update results
        document.getElementById("res-ph").textContent = isFinite(pH)
          ? pH.toFixed(4)
          : "–";
        document.getElementById("res-poh").textContent = isFinite(pOH)
          ? pOH.toFixed(4)
          : "–";
        document.getElementById("res-h").textContent = isFinite(H)
          ? formatNumber(H)
          : "–";
        document.getElementById("res-oh").textContent = isFinite(OH)
          ? formatNumber(OH)
          : "–";

        const clsInfo = classifyPH(pH, pKw);
        const classEl = document.getElementById("res-class");
        classEl.textContent = clsInfo.label;
        classEl.className = "badge " + clsInfo.cls;

        updateIndicator(pH);
      }

      document.getElementById("btn-calc").addEventListener("click", calculate);

      document
        .getElementById("input-type")
        .addEventListener("change", function () {
          const hint = document.getElementById("input-hint");
          const type = this.value;
          if (type === "ph" || type === "poh") {
            hint.textContent =
              "Enter a dimensionless pH or pOH value (e.g., 7, 4.5, 13.2).";
          } else {
            hint.textContent =
              "For concentrations, use mol/L (M). Example: 1e-4 for 1×10⁻⁴ M.";
          }
        });

      // Allow Enter key to trigger calculation
      document
        .getElementById("input-value")
        .addEventListener("keydown", function (e) {
          if (e.key === "Enter") {
            e.preventDefault();
            calculate();
          }
        });

      // Initialize Kw display
      updateKwDisplay(kwAtTempC(25));
    </script>

