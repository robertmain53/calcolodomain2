    <script>
      // Utility: format currency
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      // Utility: mortgage payment (P&I)
      function mortgagePayment(principal, annualRatePct, years) {
        const n = years * 12;
        const r = annualRatePct / 100 / 12;
        if (r === 0) return principal / n;
        const factor = Math.pow(1 + r, n);
        return (principal * r * factor) / (factor - 1);
      }

      // 1. Payment Estimator logic
      (function () {
        const priceEl = document.getElementById("pay-home-price");
        const downEl = document.getElementById("pay-down");
        const downPctEl = document.getElementById("pay-down-pct");
        const rateEl = document.getElementById("pay-rate");
        const termEl = document.getElementById("pay-term");
        const taxEl = document.getElementById("pay-tax");
        const insEl = document.getElementById("pay-ins");
        const hoaEl = document.getElementById("pay-hoa");

        function syncDownFromPct() {
          const price = parseFloat(priceEl.value) || 0;
          const pct = parseFloat(downPctEl.value) || 0;
          downEl.value = ((price * pct) / 100).toFixed(0);
        }

        function syncPctFromDown() {
          const price = parseFloat(priceEl.value) || 0;
          const down = parseFloat(downEl.value) || 0;
          downPctEl.value = price > 0 ? ((down / price) * 100).toFixed(1) : "0";
        }

        priceEl.addEventListener("input", syncDownFromPct);
        downPctEl.addEventListener("input", syncDownFromPct);
        downEl.addEventListener("input", syncPctFromDown);

        document
          .getElementById("pay-calc-btn")
          .addEventListener("click", function () {
            const price = parseFloat(priceEl.value) || 0;
            const down = parseFloat(downEl.value) || 0;
            const rate = parseFloat(rateEl.value) || 0;
            const term = parseFloat(termEl.value) || 30;
            const taxPct = parseFloat(taxEl.value) || 0;
            const insPct = parseFloat(insEl.value) || 0;
            const hoa = parseFloat(hoaEl.value) || 0;

            const loan = Math.max(price - down, 0);
            const pi = mortgagePayment(loan, rate, term);

            const annualTax = price * (taxPct / 100);
            const annualIns = price * (insPct / 100);
            const escrow = (annualTax + annualIns) / 12 + hoa;

            document.getElementById("pay-result-pi").textContent =
              fmtCurrency(pi);
            document.getElementById("pay-result-escrow").textContent =
              fmtCurrency(escrow);
            document.getElementById("pay-result-total").textContent =
              fmtCurrency(pi + escrow);
          });
      })();

      // 2. Affordability Snapshot logic
      (function () {
        document
          .getElementById("aff-calc-btn")
          .addEventListener("click", function () {
            const income =
              parseFloat(document.getElementById("aff-income").value) || 0;
            const otherDebt =
              parseFloat(document.getElementById("aff-debt").value) || 0;
            const rate =
              parseFloat(document.getElementById("aff-rate").value) || 0;
            const term =
              parseFloat(document.getElementById("aff-term").value) || 30;
            const maxDti =
              parseFloat(document.getElementById("aff-dti").value) || 43;
            const taxInsPct =
              parseFloat(document.getElementById("aff-tax-ins").value) || 1.6;

            const maxTotalDebt = income * (maxDti / 100);
            const maxHousing = Math.max(maxTotalDebt - otherDebt, 0);

            // Iterate to approximate max home price given taxes/insurance as % of price
            let low = 0,
              high = income * 1000; // broad range
            for (let iter = 0; iter < 30; iter++) {
              const mid = (low + high) / 2;
              const loan = mid * 0.8; // assume 20% down for snapshot
              const pi = mortgagePayment(loan, rate, term);
              const escrow = (mid * (taxInsPct / 100)) / 12;
              const housing = pi + escrow;
              if (housing > maxHousing) {
                high = mid;
              } else {
                low = mid;
              }
            }
            document.getElementById("aff-result-price").textContent =
              fmtCurrency(low);
          });
      })();

      // 3. Refinance Savings logic
      (function () {
        document
          .getElementById("ref-calc-btn")
          .addEventListener("click", function () {
            const bal =
              parseFloat(document.getElementById("ref-balance").value) || 0;
            const rateOld =
              parseFloat(document.getElementById("ref-rate-old").value) || 0;
            const rateNew =
              parseFloat(document.getElementById("ref-rate-new").value) || 0;
            const yearsLeft =
              parseFloat(document.getElementById("ref-years-left").value) || 30;
            const yearsNew =
              parseFloat(document.getElementById("ref-years-new").value) ||
              yearsLeft;
            const costs =
              parseFloat(document.getElementById("ref-costs").value) || 0;

            const payOld = mortgagePayment(bal, rateOld, yearsLeft);
            const payNew = mortgagePayment(bal, rateNew, yearsNew);

            const monthlySavings = payOld - payNew;
            const breakevenMonths =
              monthlySavings > 0 ? costs / monthlySavings : Infinity;

            const nOld = yearsLeft * 12;
            const nNew = yearsNew * 12;
            const totalOld = payOld * nOld;
            const totalNew = payNew * nNew + costs;
            const interestOld = totalOld - bal;
            const interestNew = totalNew - bal;
            const interestSaved = interestOld - interestNew;

            document.getElementById("ref-result-monthly").textContent =
              fmtCurrency(monthlySavings);
            document.getElementById("ref-result-breakeven").textContent =
              !isFinite(breakevenMonths) || breakevenMonths <= 0
                ? "N/A"
                : (breakevenMonths / 12).toFixed(1) + " years";
            document.getElementById("ref-result-total").textContent =
              fmtCurrency(interestSaved);
          });
      })();

      // 4. 15 vs 30 Year Comparison logic
      (function () {
        document
          .getElementById("term-calc-btn")
          .addEventListener("click", function () {
            const amount =
              parseFloat(document.getElementById("term-price").value) || 0;
            const rate15 =
              parseFloat(document.getElementById("term-rate-15").value) || 0;
            const rate30 =
              parseFloat(document.getElementById("term-rate-30").value) || 0;

            const pay15 = mortgagePayment(amount, rate15, 15);
            const pay30 = mortgagePayment(amount, rate30, 30);

            const int15 = pay15 * 15 * 12 - amount;
            const int30 = pay30 * 30 * 12 - amount;

            document.getElementById("term-result-15-pay").textContent =
              fmtCurrency(pay15);
            document.getElementById("term-result-30-pay").textContent =
              fmtCurrency(pay30);
            document.getElementById("term-result-15-int").textContent =
              fmtCurrency(int15);
            document.getElementById("term-result-30-int").textContent =
              fmtCurrency(int30);
            document.getElementById("term-result-diff").textContent =
              fmtCurrency(int30 - int15);
          });
      })();

      // Simple FAQ toggle (in addition to global script_faq, kept self-contained)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            if (isHidden) answer.classList.remove("hidden");
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
