      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1) + "%";
      }

      function calculateProgressiveTax(income, brackets) {
        let remaining = income;
        let lastCap = 0;
        let tax = 0;
        let topRate = 0;

        for (const bracket of brackets) {
          const cap = bracket.upTo;
          const rate = bracket.rate;
          if (cap === null) {
            // Top bracket
            if (remaining > 0) {
              tax += remaining * rate;
              topRate = rate;
            }
            break;
          } else {
            const bracketWidth = cap - lastCap;
            const taxableHere = Math.min(remaining, bracketWidth);
            if (taxableHere > 0) {
              tax += taxableHere * rate;
              topRate = rate;
              remaining -= taxableHere;
            }
            lastCap = cap;
            if (remaining <= 0) break;
          }
        }

        return { tax, topRate };
      }

      function recalcWvTax() {
        const year = document.getElementById("tax-year").value;
        const filingStatus = document.getElementById("filing-status").value;
        const residency = document.getElementById("residency").value;
        const income =
          parseFloat(document.getElementById("annual-income").value) || 0;
        const wvShare =
          parseFloat(document.getElementById("wv-source-share").value) || 0;
        const pretax =
          parseFloat(document.getElementById("pretax-401k").value) || 0;
        const otherDed =
          parseFloat(document.getElementById("other-deductions").value) || 0;
        const applyStd = document.getElementById(
          "apply-standard-deduction"
        ).checked;

        const yearData = WV_TAX_DATA[year];
        if (!yearData) return;

        const brackets = yearData[filingStatus];
        const stdDedMap = yearData.standardDeduction || {};
        const stdDed = applyStd ? stdDedMap[filingStatus] || 0 : 0;

        // WV-source income
        const wvSourceIncome = income * (wvShare / 100);

        // Adjusted taxable income
        let taxable = wvSourceIncome - pretax - otherDed - stdDed;
        if (taxable < 0) taxable = 0;

        const { tax, topRate } = calculateProgressiveTax(taxable, brackets);

        const effectiveRate = income > 0 ? (tax / income) * 100 : 0;
        const afterTax = income - tax;

        document.getElementById("result-taxable-income").textContent =
          formatCurrency(taxable);
        document.getElementById("result-tax").textContent = formatCurrency(tax);
        document.getElementById("result-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("result-after-tax").textContent =
          formatCurrency(afterTax);
        document.getElementById("result-year").textContent = year;

        const residencyLabel =
          residency === "resident"
            ? "resident"
            : residency === "nonresident"
            ? "nonresident"
            : "part-year";
        const topBracketText =
          topRate > 0
            ? (topRate * 100).toFixed(2) + "% (" + residencyLabel + ")"
            : "N/A";
        document.getElementById("result-top-bracket").textContent =
          topBracketText;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const shareSlider = document.getElementById("wv-source-share");
        const shareOutput = document.getElementById("wv-source-share-output");
        shareSlider.addEventListener("input", () => {
          shareOutput.textContent = shareSlider.value + "%";
          recalcWvTax();
        });

        document
          .getElementById("tax-year")
          .addEventListener("change", recalcWvTax);
        document
          .getElementById("filing-status")
          .addEventListener("change", recalcWvTax);
        document
          .getElementById("residency")
          .addEventListener("change", recalcWvTax);
        document
          .getElementById("annual-income")
          .addEventListener("input", recalcWvTax);
        document
          .getElementById("pretax-401k")
          .addEventListener("input", recalcWvTax);
        document
          .getElementById("other-deductions")
          .addEventListener("input", recalcWvTax);
        document
          .getElementById("apply-standard-deduction")
          .addEventListener("change", recalcWvTax);
        document
          .getElementById("calculate-btn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            recalcWvTax();
          });

        // Initial calculation
        recalcWvTax();
      });

