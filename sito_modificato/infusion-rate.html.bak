    <script>
      // Tab handling
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".tab-btn")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document
            .querySelectorAll(".tab-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById("tab-" + target).classList.remove("hidden");
        });
      });

      function getTimeInHours(h, m, s) {
        const hours = parseFloat(h) || 0;
        const mins = parseFloat(m) || 0;
        const secs = parseFloat(s) || 0;
        return hours + mins / 60 + secs / 3600;
      }

      // Simple rate
      document
        .getElementById("btn-simple-calc")
        .addEventListener("click", () => {
          const vol = parseFloat(
            document.getElementById("simple-volume").value
          );
          const t = getTimeInHours(
            document.getElementById("simple-hours").value,
            document.getElementById("simple-minutes").value,
            document.getElementById("simple-seconds").value
          );
          const resultBox = document.getElementById("simple-result");
          if (!vol || vol <= 0 || !t || t <= 0) {
            resultBox.classList.remove("hidden");
            document.getElementById("simple-rate-mlhr").textContent = "–";
            document.getElementById("simple-rate-mlmin").textContent = "–";
            return;
          }
          const rateMlHr = vol / t;
          const rateMlMin = rateMlHr / 60;
          document.getElementById("simple-rate-mlhr").textContent =
            rateMlHr.toFixed(1);
          document.getElementById("simple-rate-mlmin").textContent =
            rateMlMin.toFixed(2);
          resultBox.classList.remove("hidden");
        });

      document
        .getElementById("btn-simple-clear")
        .addEventListener("click", () => {
          [
            "simple-volume",
            "simple-hours",
            "simple-minutes",
            "simple-seconds",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("simple-result").classList.add("hidden");
        });

      // Drip rate
      document.getElementById("btn-drip-calc").addEventListener("click", () => {
        const vol = parseFloat(document.getElementById("drip-volume").value);
        const t = getTimeInHours(
          document.getElementById("drip-hours").value,
          document.getElementById("drip-minutes").value,
          document.getElementById("drip-seconds").value
        );
        const df = parseFloat(document.getElementById("drip-factor").value);
        const resultBox = document.getElementById("drip-result");
        if (!vol || vol <= 0 || !t || t <= 0 || !df || df <= 0) {
          resultBox.classList.remove("hidden");
          document.getElementById("drip-gttmin").textContent = "–";
          document.getElementById("drip-mlhr").textContent = "–";
          return;
        }
        const mlHr = vol / t;
        const gttMin = (mlHr * df) / 60;
        document.getElementById("drip-gttmin").textContent = Math.round(gttMin);
        document.getElementById("drip-mlhr").textContent = mlHr.toFixed(1);
        resultBox.classList.remove("hidden");
      });

      document
        .getElementById("btn-drip-clear")
        .addEventListener("click", () => {
          [
            "drip-volume",
            "drip-hours",
            "drip-minutes",
            "drip-seconds",
            "drip-factor",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("drip-result").classList.add("hidden");
        });

      // Weight-based
      document.getElementById("btn-wb-calc").addEventListener("click", () => {
        const w = parseFloat(document.getElementById("wb-weight").value);
        const wUnit = document.getElementById("wb-weight-unit").value;
        const dose = parseFloat(document.getElementById("wb-dose").value);
        const doseUnit = document.getElementById("wb-dose-unit").value;
        const amt = parseFloat(document.getElementById("wb-drug-amount").value);
        const amtUnit = document.getElementById("wb-drug-amount-unit").value;
        const vol = parseFloat(document.getElementById("wb-volume").value);
        const resultBox = document.getElementById("wb-result");

        if (
          !w ||
          w <= 0 ||
          !dose ||
          dose <= 0 ||
          !amt ||
          amt <= 0 ||
          !vol ||
          vol <= 0
        ) {
          resultBox.classList.remove("hidden");
          document.getElementById("wb-mlhr").textContent = "–";
          document.getElementById("wb-conc").textContent = "–";
          return;
        }

        // Convert weight to kg
        const weightKg = wUnit === "lb" ? w * 0.45359237 : w;

        // Drug amount to mcg
        let amtMcg = amt;
        if (amtUnit === "mg") amtMcg = amt * 1000;

        const concMcgPerMl = amtMcg / vol;

        // Dose to mcg/kg/min
        let doseMcgKgMin = dose;
        if (doseUnit === "mgkghr") {
          // mg/kg/hr → mcg/kg/min
          doseMcgKgMin = (dose * 1000) / 60;
        }

        const rateMlHr = (doseMcgKgMin * weightKg * 60) / concMcgPerMl;

        document.getElementById("wb-mlhr").textContent = rateMlHr.toFixed(2);
        document.getElementById("wb-conc").textContent =
          concMcgPerMl.toFixed(1) + " mcg/mL";
        resultBox.classList.remove("hidden");
      });

      document.getElementById("btn-wb-clear").addEventListener("click", () => {
        ["wb-weight", "wb-dose", "wb-drug-amount", "wb-volume"].forEach(
          (id) => {
            document.getElementById(id).value = "";
          }
        );
        document.getElementById("wb-result").classList.add("hidden");
      });

      // Dose-based
      document.getElementById("btn-db-calc").addEventListener("click", () => {
        const dose = parseFloat(document.getElementById("db-dose").value);
        const doseUnit = document.getElementById("db-dose-unit").value;
        const amt = parseFloat(document.getElementById("db-drug-amount").value);
        const amtUnit = document.getElementById("db-drug-amount-unit").value;
        const vol = parseFloat(document.getElementById("db-volume").value);
        const resultBox = document.getElementById("db-result");

        if (!dose || dose <= 0 || !amt || amt <= 0 || !vol || vol <= 0) {
          resultBox.classList.remove("hidden");
          document.getElementById("db-mlhr").textContent = "–";
          document.getElementById("db-conc").textContent = "–";
          return;
        }

        // Convert dose to mg/hr
        let doseMgHr;
        if (doseUnit === "mg_hr") {
          doseMgHr = dose;
        } else {
          // mcg/min → mg/hr
          doseMgHr = (dose * 60) / 1000;
        }

        // Drug amount to mg
        let amtMg = amt;
        if (amtUnit === "mcg") amtMg = amt / 1000;

        const concMgPerMl = amtMg / vol;
        const rateMlHr = doseMgHr / concMgPerMl;

        document.getElementById("db-mlhr").textContent = rateMlHr.toFixed(2);
        document.getElementById("db-conc").textContent =
          concMgPerMl.toFixed(3) + " mg/mL";
        resultBox.classList.remove("hidden");
      });

      document.getElementById("btn-db-clear").addEventListener("click", () => {
        ["db-dose", "db-drug-amount", "db-volume"].forEach((id) => {
          document.getElementById(id).value = "";
        });
        document.getElementById("db-result").classList.add("hidden");
      });

