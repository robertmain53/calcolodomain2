    <script>
      (function () {
        const incomeFrequencyEl = document.getElementById("income-frequency");
        const incomeAmountEl = document.getElementById("income-amount");
        const hoursPerWeekEl = document.getElementById("hours-per-week");
        const hourlyWrapperEl = document.getElementById("hourly-wrapper");

        const housingCurrentEl = document.getElementById("housing-current");
        const toggleProposedHousingEl = document.getElementById(
          "toggle-proposed-housing"
        );
        const housingProposedEl = document.getElementById("housing-proposed");

        const autoLoansEl = document.getElementById("auto-loans");
        const studentLoansEl = document.getElementById("student-loans");
        const creditCardsEl = document.getElementById("credit-cards");
        const otherDebtsEl = document.getElementById("other-debts");

        const scenarioPaymentEl = document.getElementById("scenario-payment");
        const scenarioTypeEl = document.getElementById("scenario-type");
        const scenarioApplyBtn = document.getElementById("scenario-apply");

        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorEl = document.getElementById("calc-error");

        const resultsSectionEl = document.getElementById("results-section");
        const monthlyIncomeDisplayEl = document.getElementById(
          "monthly-income-display"
        );
        const totalDebtDisplayEl =
          document.getElementById("total-debt-display");
        const frontEndDtiEl = document.getElementById("front-end-dti");
        const backEndDtiEl = document.getElementById("back-end-dti");
        const currentDtiLabelEl = document.getElementById("current-dti-label");

        const scenarioResultsCardEl = document.getElementById(
          "scenario-results-card"
        );
        const scenarioDescriptionEl = document.getElementById(
          "scenario-description"
        );
        const scenarioFrontEndDtiEl = document.getElementById(
          "scenario-front-end-dti"
        );
        const scenarioBackEndDtiEl = document.getElementById(
          "scenario-back-end-dti"
        );
        const scenarioTotalDebtDisplayEl = document.getElementById(
          "scenario-total-debt-display"
        );
        const scenarioChangeDisplayEl = document.getElementById(
          "scenario-change-display"
        );
        const scenarioDtiLabelEl =
          document.getElementById("scenario-dti-label");

        const interpretationEl = document.getElementById("interpretation");
        const badgeExcellentEl = document.getElementById("badge-excellent");
        const badgeAcceptableEl = document.getElementById("badge-acceptable");
        const badgeBorderlineEl = document.getElementById("badge-borderline");
        const badgeHighEl = document.getElementById("badge-high");

        let lastBaseBackEndDti = null;
        let lastBaseTotalDebt = null;
        let lastMonthlyIncome = null;

        function parseVal(el) {
          const v = parseFloat(el.value);
          return isNaN(v) ? 0 : v;
        }

        function formatCurrency(num) {
          if (!isFinite(num)) return "–";
          return (
            "$" +
            num.toLocaleString(undefined, {
              maximumFractionDigits: 2,
              minimumFractionDigits: 2,
            })
          );
        }

        function formatPercent(num) {
          if (!isFinite(num)) return "–";
          return (
            num.toLocaleString(undefined, {
              maximumFractionDigits: 1,
              minimumFractionDigits: 1,
            }) + "%"
          );
        }

        function computeMonthlyIncome() {
          const freq = incomeFrequencyEl.value;
          const amount = parseVal(incomeAmountEl);
          if (amount <= 0) return 0;

          switch (freq) {
            case "monthly":
              return amount;
            case "annual":
              return amount / 12;
            case "weekly":
              return (amount * 52) / 12;
            case "biweekly":
              return (amount * 26) / 12;
            case "hourly":
              const hours = parseVal(hoursPerWeekEl);
              if (hours <= 0) return 0;
              return (amount * hours * 52) / 12;
            default:
              return 0;
          }
        }

        function updateHourlyVisibility() {
          if (incomeFrequencyEl.value === "hourly") {
            hourlyWrapperEl.classList.remove("hidden");
          } else {
            hourlyWrapperEl.classList.add("hidden");
          }
        }

        function updateProposedHousingVisibility() {
          if (toggleProposedHousingEl.checked) {
            housingProposedEl.classList.remove("hidden");
          } else {
            housingProposedEl.classList.add("hidden");
            housingProposedEl.value = "";
          }
        }

        function resetBadges() {
          [
            badgeExcellentEl,
            badgeAcceptableEl,
            badgeBorderlineEl,
            badgeHighEl,
          ].forEach((b) => b.classList.add("hidden"));
        }

        function setInterpretation(backEndDti) {
          resetBadges();
          if (!isFinite(backEndDti)) {
            interpretationEl.classList.add("hidden");
            return;
          }
          interpretationEl.classList.remove("hidden");

          if (backEndDti < 20) {
            badgeExcellentEl.classList.remove("hidden");
          } else if (backEndDti < 37) {
            badgeAcceptableEl.classList.remove("hidden");
          } else if (backEndDti < 44) {
            badgeBorderlineEl.classList.remove("hidden");
          } else {
            badgeHighEl.classList.remove("hidden");
          }
        }

        function setDtiLabel(el, dti) {
          if (!isFinite(dti)) {
            el.textContent = "–";
            el.className =
              "text-xs font-medium px-2 py-1 rounded-full bg-gray-100 text-gray-700";
            return;
          }
          el.textContent = formatPercent(dti);
          let baseClass = "text-xs font-medium px-2 py-1 rounded-full ";
          if (dti < 20) {
            el.className = baseClass + "bg-emerald-100 text-emerald-800";
          } else if (dti < 37) {
            el.className = baseClass + "bg-blue-100 text-blue-800";
          } else if (dti < 44) {
            el.className = baseClass + "bg-amber-100 text-amber-800";
          } else {
            el.className = baseClass + "bg-rose-100 text-rose-800";
          }
        }

        function calculateBaseDti() {
          errorEl.classList.add("hidden");
          const monthlyIncome = computeMonthlyIncome();
          const housing = parseVal(housingCurrentEl);
          const auto = parseVal(autoLoansEl);
          const student = parseVal(studentLoansEl);
          const cards = parseVal(creditCardsEl);
          const other = parseVal(otherDebtsEl);

          const totalDebt = housing + auto + student + cards + other;

          if (monthlyIncome <= 0 || totalDebt <= 0) {
            resultsSectionEl.classList.add("hidden");
            interpretationEl.classList.add("hidden");
            errorEl.classList.remove("hidden");
            lastBaseBackEndDti = null;
            lastBaseTotalDebt = null;
            lastMonthlyIncome = null;
            return;
          }

          const frontEndDti = (housing / monthlyIncome) * 100;
          const backEndDti = (totalDebt / monthlyIncome) * 100;

          lastBaseBackEndDti = backEndDti;
          lastBaseTotalDebt = totalDebt;
          lastMonthlyIncome = monthlyIncome;

          resultsSectionEl.classList.remove("hidden");

          monthlyIncomeDisplayEl.textContent = formatCurrency(monthlyIncome);
          totalDebtDisplayEl.textContent = formatCurrency(totalDebt);
          frontEndDtiEl.textContent = formatPercent(frontEndDti);
          backEndDtiEl.textContent = formatPercent(backEndDti);
          setDtiLabel(currentDtiLabelEl, backEndDti);
          setInterpretation(backEndDti);

          // Clear scenario results when base recalculated
          scenarioResultsCardEl.classList.add("hidden");
        }

        function applyScenario() {
          if (!lastMonthlyIncome || !lastBaseTotalDebt) {
            errorEl.classList.remove("hidden");
            return;
          }
          const scenarioType = scenarioTypeEl.value;
          const payment = parseVal(scenarioPaymentEl);

          if (scenarioType === "none" || payment <= 0) {
            scenarioResultsCardEl.classList.add("hidden");
            return;
          }

          let newTotalDebt = lastBaseTotalDebt;
          let description = "";

          if (scenarioType === "add") {
            newTotalDebt += payment;
            description =
              "Assuming you take on a new loan with a monthly payment of " +
              formatCurrency(payment) +
              ".";
          } else if (scenarioType === "remove") {
            newTotalDebt = Math.max(0, lastBaseTotalDebt - payment);
            description =
              "Assuming you pay off a loan with a monthly payment of " +
              formatCurrency(payment) +
              ".";
          }

          const housing = parseVal(housingCurrentEl);
          const frontEndDtiScenario = (housing / lastMonthlyIncome) * 100;
          const backEndDtiScenario = (newTotalDebt / lastMonthlyIncome) * 100;

          scenarioDescriptionEl.textContent = description;
          scenarioTotalDebtDisplayEl.textContent = formatCurrency(newTotalDebt);
          scenarioFrontEndDtiEl.textContent =
            formatPercent(frontEndDtiScenario);
          scenarioBackEndDtiEl.textContent = formatPercent(backEndDtiScenario);

          const diff = backEndDtiScenario - lastBaseBackEndDti;
          const sign = diff > 0 ? "+" : "";
          scenarioChangeDisplayEl.textContent = sign + diff.toFixed(1) + " pts";

          setDtiLabel(scenarioDtiLabelEl, backEndDtiScenario);
          scenarioResultsCardEl.classList.remove("hidden");
        }

        incomeFrequencyEl.addEventListener("change", updateHourlyVisibility);
        toggleProposedHousingEl.addEventListener(
          "change",
          updateProposedHousingVisibility
        );

        calculateBtn.addEventListener("click", calculateBaseDti);
        resetBtn.addEventListener("click", function () {
          [
            incomeAmountEl,
            hoursPerWeekEl,
            housingCurrentEl,
            housingProposedEl,
            autoLoansEl,
            studentLoansEl,
            creditCardsEl,
            otherDebtsEl,
            scenarioPaymentEl,
          ].forEach((el) => (el.value = ""));

          incomeFrequencyEl.value = "monthly";
          scenarioTypeEl.value = "none";
          toggleProposedHousingEl.checked = false;
          updateHourlyVisibility();
          updateProposedHousingVisibility();

          resultsSectionEl.classList.add("hidden");
          scenarioResultsCardEl.classList.add("hidden");
          interpretationEl.classList.add("hidden");
          errorEl.classList.add("hidden");

          lastBaseBackEndDti = null;
          lastBaseTotalDebt = null;
          lastMonthlyIncome = null;
        });

