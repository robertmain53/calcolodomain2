    <script>
      (function () {
        const perpTypeEl = document.getElementById("perp-type");
        const solveForEl = document.getElementById("solve-for");
        const cContainer = document.getElementById("input-c-container");
        const pvContainer = document.getElementById("input-pv-container");
        const rContainer = document.getElementById("input-r-container");
        const gContainer = document.getElementById("input-g-container");
        const cInput = document.getElementById("input-c");
        const pvInput = document.getElementById("input-pv");
        const rInput = document.getElementById("input-r");
        const gInput = document.getElementById("input-g");
        const labelCSymbol = document.getElementById("label-c-symbol");
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const resultBox = document.getElementById("result-container");
        const resultMain = document.getElementById("result-main");
        const resultDetail = document.getElementById("result-detail");
        const resultWarning = document.getElementById("result-warning");

        function updateVisibility() {
          const type = perpTypeEl.value;
          const solveFor = solveForEl.value;

          // Growing perpetuity uses C1 (next period cash flow)
          labelCSymbol.textContent = type === "growing" ? "(C₁)" : "(C)";

          // Show growth input only for growing perpetuity
          gContainer.classList.toggle("hidden", type !== "growing");

          // Show/hide based on what we're solving for
          cContainer.classList.toggle("hidden", solveFor === "c");
          pvContainer.classList.toggle("hidden", solveFor === "pv");
          rContainer.classList.toggle("hidden", solveFor === "r");
          gContainer.classList.toggle(
            "hidden",
            type !== "growing" || solveFor === "g"
          );

          // Clear previous result
          resultBox.classList.add("hidden");
          resultWarning.classList.add("hidden");
          resultWarning.textContent = "";
        }

        function parsePercent(value) {
          if (value === "" || isNaN(value)) return null;
          return Number(value) / 100;
        }

        function formatCurrency(num) {
          if (!isFinite(num)) return "—";
          const abs = Math.abs(num);
          const decimals = abs >= 1000 ? 2 : 2;
          return num.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          });
        }

        function formatPercent(num) {
          if (!isFinite(num)) return "—";
          return (
            (num * 100).toLocaleString(undefined, {
              minimumFractionDigits: 2,
              maximumFractionDigits: 4,
            }) + "%"
          );
        }

        function calculate() {
          const type = perpTypeEl.value;
          const solveFor = solveForEl.value;

          const C = cInput.value === "" ? null : Number(cInput.value);
          const PV = pvInput.value === "" ? null : Number(pvInput.value);
          const r = parsePercent(rInput.value);
          const g = type === "growing" ? parsePercent(gInput.value) : 0;

          resultWarning.classList.add("hidden");
          resultWarning.textContent = "";

          try {
            let result, detail;

            if (type === "level") {
              // Level perpetuity: PV = C / r
              if (solveFor === "pv") {
                if (C === null || r === null || r <= 0)
                  throw new Error(
                    "Enter a positive payment and discount rate."
                  );
                result = C / r;
                resultMain.textContent =
                  "Present value (PV) ≈ " + formatCurrency(result);
                detail = `Using PV = C / r = ${C} / ${r.toFixed(4)}.`;
              } else if (solveFor === "c") {
                if (PV === null || r === null || r <= 0)
                  throw new Error(
                    "Enter a positive present value and discount rate."
                  );
                result = PV * r;
                resultMain.textContent =
                  "Payment per period (C) ≈ " + formatCurrency(result);
                detail = `Using C = PV × r = ${PV} × ${r.toFixed(4)}.`;
              } else if (solveFor === "r") {
                if (PV === null || C === null || PV <= 0)
                  throw new Error(
                    "Enter a positive present value and payment."
                  );
                result = C / PV;
                resultMain.textContent =
                  "Discount rate (r) ≈ " + formatPercent(result);
                detail = `Using r = C / PV = ${C} / ${PV}.`;
              } else {
                throw new Error("Invalid selection.");
              }
            } else {
              // Growing perpetuity: PV = C1 / (r - g)
              if (solveFor === "pv") {
                if (C === null || r === null || g === null)
                  throw new Error(
                    "Enter payment, discount rate, and growth rate."
                  );
                if (r <= g) {
                  resultWarning.textContent =
                    "For a valid growing perpetuity, the discount rate r must be greater than the growth rate g.";
                  resultWarning.classList.remove("hidden");
                }
                result = C / (r - g);
                resultMain.textContent =
                  "Present value (PV) ≈ " + formatCurrency(result);
                detail = `Using PV = C₁ / (r − g) = ${C} / (${r.toFixed(
                  4
                )} − ${g.toFixed(4)}).`;
              } else if (solveFor === "c") {
                if (PV === null || r === null || g === null)
                  throw new Error(
                    "Enter present value, discount rate, and growth rate."
                  );
                if (r <= g) {
                  resultWarning.textContent =
                    "For a valid growing perpetuity, the discount rate r must be greater than the growth rate g.";
                  resultWarning.classList.remove("hidden");
                }
                result = PV * (r - g);
                resultMain.textContent =
                  "Next period payment (C₁) ≈ " + formatCurrency(result);
                detail = `Using C₁ = PV × (r − g) = ${PV} × (${r.toFixed(
                  4
                )} − ${g.toFixed(4)}).`;
              } else if (solveFor === "r") {
                if (PV === null || C === null || g === null)
                  throw new Error(
                    "Enter present value, next payment, and growth rate."
                  );
                result = C / PV + g;
                resultMain.textContent =
                  "Discount rate (r) ≈ " + formatPercent(result);
                detail = `Using r = C₁ / PV + g = ${C} / ${PV} + ${g.toFixed(
                  4
                )}.`;
              } else if (solveFor === "g") {
                if (PV === null || C === null || r === null)
                  throw new Error(
                    "Enter present value, next payment, and discount rate."
                  );
                result = r - C / PV;
                resultMain.textContent =
                  "Growth rate (g) ≈ " + formatPercent(result);
                detail = `Using g = r − C₁ / PV = ${r.toFixed(
                  4
                )} − ${C} / ${PV}.`;
              } else {
                throw new Error("Invalid selection.");
              }
            }

            resultDetail.textContent = detail;
            resultBox.classList.remove("hidden");
          } catch (err) {
            resultMain.textContent = "Unable to calculate.";
            resultDetail.textContent = err.message;
            resultBox.classList.remove("hidden");
          }
        }

        function resetForm() {
          perpTypeEl.value = "level";
          solveForEl.value = "pv";
          cInput.value = "";
          pvInput.value = "";
          rInput.value = "";
          gInput.value = "";
          document.getElementById("period-select").value = "annual";
          resultBox.classList.add("hidden");
          resultWarning.classList.add("hidden");
          resultWarning.textContent = "";
          updateVisibility();
        }

        perpTypeEl.addEventListener("change", updateVisibility);
        solveForEl.addEventListener("change", updateVisibility);
        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetForm);

        updateVisibility();
      })();
    </script>

