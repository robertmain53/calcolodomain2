    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        if (abs >= 1e9) return sign + "$" + (abs / 1e9).toFixed(1) + "B";
        if (abs >= 1e6) return sign + "$" + (abs / 1e6).toFixed(1) + "M";
        if (abs >= 1e3) return sign + "$" + (abs / 1e3).toFixed(1) + "k";
        return (
          sign +
          "$" +
          abs.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1) + "%";
      }

      function updateDerivedLabels() {
        const currentAge =
          Number(document.getElementById("current-age").value) || 0;
        const retirementAge =
          Number(document.getElementById("retirement-age").value) || 0;
        const lifeExpectancy =
          Number(document.getElementById("life-expectancy").value) || 0;

        const yearsToRetire = Math.max(0, retirementAge - currentAge);
        const yearsInRetirement = Math.max(0, lifeExpectancy - retirementAge);

        document.getElementById("years-to-retire-label").textContent =
          yearsToRetire;
        document.getElementById("years-in-retirement-label").textContent =
          yearsInRetirement;

        const currentIncome =
          Number(document.getElementById("current-income").value) || 0;
        const replacementRate =
          Number(document.getElementById("replacement-rate").value) || 0;
        const targetIncome = currentIncome * (replacementRate / 100);
        document.getElementById("target-income-label").textContent =
          formatCurrency(targetIncome) + " /yr";

        document.getElementById("replacement-rate-label").textContent =
          replacementRate + "%";
        document.getElementById("expected-return-label").textContent =
          (
            Number(document.getElementById("expected-return").value) || 0
          ).toFixed(1) + "%";
        document.getElementById(
          "expected-return-retirement-label"
        ).textContent =
          (
            Number(
              document.getElementById("expected-return-retirement").value
            ) || 0
          ).toFixed(1) + "%";
        document.getElementById("inflation-rate-label").textContent =
          (
            Number(document.getElementById("inflation-rate").value) || 0
          ).toFixed(1) + "%";
      }

      function calculateRetirement() {
        updateDerivedLabels();

        const currentAge =
          Number(document.getElementById("current-age").value) || 0;
        const retirementAge =
          Number(document.getElementById("retirement-age").value) || 0;
        const lifeExpectancy =
          Number(document.getElementById("life-expectancy").value) || 0;

        const yearsToRetire = Math.max(0, retirementAge - currentAge);
        const yearsInRetirement = Math.max(
          1,
          lifeExpectancy - retirementAge || 0
        );

        const currentIncome =
          Number(document.getElementById("current-income").value) || 0;
        const replacementRate =
          Number(document.getElementById("replacement-rate").value) || 0;
        const targetIncome = currentIncome * (replacementRate / 100);

        const pensionIncome =
          Number(document.getElementById("pension-income").value) || 0;
        const govtIncome =
          Number(document.getElementById("govt-income").value) || 0;
        const otherIncome =
          Number(document.getElementById("other-income").value) || 0;

        const currentSavings =
          Number(document.getElementById("current-savings").value) || 0;
        const annualContribution =
          Number(document.getElementById("annual-contribution").value) || 0;

        const expectedReturn =
          (Number(document.getElementById("expected-return").value) || 0) / 100;
        const expectedReturnRet =
          (Number(
            document.getElementById("expected-return-retirement").value
          ) || 0) / 100;
        const inflation =
          (Number(document.getElementById("inflation-rate").value) || 0) / 100;

        // Convert nominal returns to real returns (approximate)
        const realReturnPre = (1 + expectedReturn) / (1 + inflation) - 1;
        const realReturnRet = (1 + expectedReturnRet) / (1 + inflation) - 1;

        // Future value of current savings
        let fvCurrent =
          currentSavings * Math.pow(1 + realReturnPre, yearsToRetire);

        // Future value of contributions (ordinary annuity)
        let fvContrib = 0;
        if (realReturnPre !== 0) {
          fvContrib =
            annualContribution *
            ((Math.pow(1 + realReturnPre, yearsToRetire) - 1) / realReturnPre);
        } else {
          fvContrib = annualContribution * yearsToRetire;
        }

        const nestEgg = fvCurrent + fvContrib;

        // Sustainable withdrawal using annuity formula in real terms
        let withdrawal = 0;
        if (realReturnRet > 0) {
          withdrawal =
            nestEgg *
            (realReturnRet /
              (1 - Math.pow(1 + realReturnRet, -yearsInRetirement)));
        } else {
          // If real return is 0 or negative, approximate by straight-line drawdown
          withdrawal = yearsInRetirement > 0 ? nestEgg / yearsInRetirement : 0;
        }

        const guaranteedIncome = pensionIncome + govtIncome + otherIncome;
        const projectedIncome = guaranteedIncome + withdrawal;

        const gap = projectedIncome - targetIncome;
        const withdrawalRate = nestEgg > 0 ? (withdrawal / nestEgg) * 100 : 0;

        // Update UI
        document.getElementById("result-target-income").textContent =
          formatCurrency(targetIncome) + " /yr";
        document.getElementById("result-projected-income").textContent =
          formatCurrency(projectedIncome) + " /yr";

        const gapEl = document.getElementById("result-gap");
        const gapNoteEl = document.getElementById("result-gap-note");

        if (gap >= 0) {
          gapEl.textContent = formatCurrency(gap) + " surplus";
          gapEl.classList.remove("text-red-600");
          gapEl.classList.add("text-green-700");
          gapNoteEl.textContent =
            "You appear to be on track or ahead of your target based on these assumptions.";
        } else {
          gapEl.textContent = formatCurrency(Math.abs(gap)) + " gap";
          gapEl.classList.remove("text-green-700");
          gapEl.classList.add("text-red-600");
          gapNoteEl.textContent =
            "You may need to save more, retire later, or lower your target spending.";
        }

        document.getElementById("result-nest-egg").textContent =
          formatCurrency(nestEgg);
        document.getElementById("result-withdrawal-rate").textContent =
          formatPercent(withdrawalRate);

        const interp = document.getElementById("result-interpretation");
        if (!isFinite(nestEgg) || nestEgg <= 0) {
          interp.textContent =
            "Your projected retirement savings are very low with the current inputs. Try increasing contributions, extending your working years, or reviewing your assumptions.";
        } else if (withdrawalRate > 6) {
          interp.textContent =
            "Your plan relies on a relatively high withdrawal rate from savings. Consider saving more, delaying retirement, or reducing your target income to improve sustainability.";
        } else if (withdrawalRate >= 3 && withdrawalRate <= 6 && gap >= 0) {
          interp.textContent =
            "Your projected withdrawal rate is within a commonly cited range for long-term retirement plans. Continue to monitor your savings, investment returns, and spending needs over time.";
        } else {
          interp.textContent =
            "Review the gap and withdrawal rate to see whether your plan feels comfortable. Small adjustments to savings, retirement age, or target income can have a big impact.";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const inputsToWatch = [
          "current-age",
          "retirement-age",
          "life-expectancy",
          "current-income",
          "replacement-rate",
          "expected-return",
          "expected-return-retirement",
          "inflation-rate",
          "pension-income",
          "govt-income",
          "other-income",
          "current-savings",
          "annual-contribution",
        ];

        inputsToWatch.forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", updateDerivedLabels);
          }
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateRetirement);

        // Initial display
        updateDerivedLabels();
        calculateRetirement();
      });

