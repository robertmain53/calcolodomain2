    <script>
      // Business operations calculator logic
      function formatNumber(num, decimals = 1) {
        if (!isFinite(num)) return "–";
        return num.toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function formatCurrency(num) {
        if (!isFinite(num)) return "–";
        return (
          "$" +
          num.toLocaleString(undefined, {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
          })
        );
      }

      function formatPercent(num) {
        if (!isFinite(num)) return "–";
        return (
          (num * 100).toLocaleString(undefined, {
            minimumFractionDigits: 0,
            maximumFractionDigits: 1,
          }) + "%"
        );
      }

      function recalcBusinessOps() {
        const monthlyVolume =
          parseFloat(document.getElementById("monthlyVolume").value) || 0;
        const avgMinutesPerUnit =
          parseFloat(document.getElementById("avgMinutesPerUnit").value) || 0;
        const workingDaysPerMonth =
          parseFloat(document.getElementById("workingDaysPerMonth").value) || 0;

        const fteCount =
          parseFloat(document.getElementById("fteCount").value) || 0;
        const hoursPerFtePerDay =
          parseFloat(document.getElementById("hoursPerFtePerDay").value) || 0;
        const productiveTimeShare = Math.min(
          Math.max(
            parseFloat(document.getElementById("productiveTimeShare").value) ||
              0,
            0
          ),
          100
        );

        const revenuePerUnit =
          parseFloat(document.getElementById("revenuePerUnit").value) || 0;
        const monthlyTeamCost =
          parseFloat(document.getElementById("monthlyTeamCost").value) || 0;
        const targetUtilizationPct = Math.min(
          Math.max(
            parseFloat(document.getElementById("targetUtilization").value) ||
              80,
            10
          ),
          100
        );

        // Derived values
        const totalWorkloadHours = (monthlyVolume * avgMinutesPerUnit) / 60;
        const hoursPerFtePerMonth =
          hoursPerFtePerDay * workingDaysPerMonth * (productiveTimeShare / 100);
        const teamCapacityHours = fteCount * hoursPerFtePerMonth;
        const utilization =
          teamCapacityHours > 0 ? totalWorkloadHours / teamCapacityHours : NaN;

        const targetUtilization = targetUtilizationPct / 100;
        const ftesNeeded =
          hoursPerFtePerMonth * targetUtilization > 0
            ? totalWorkloadHours / (hoursPerFtePerMonth * targetUtilization)
            : NaN;

        const revenue = monthlyVolume * revenuePerUnit;
        const opsMargin =
          revenue > 0 ? (revenue - monthlyTeamCost) / revenue : NaN;
        const revenuePerFte = fteCount > 0 ? revenue / fteCount : NaN;

        // Update DOM
        document.getElementById("kpiTotalHours").textContent =
          formatNumber(totalWorkloadHours, 1) + " h / month";
        document.getElementById("kpiCapacityHours").textContent =
          formatNumber(teamCapacityHours, 1) + " h / month";
        document.getElementById("kpiUtilization").textContent =
          formatPercent(utilization);

        document.getElementById("kpiHeadcountNeeded").textContent = isFinite(
          ftesNeeded
        )
          ? formatNumber(ftesNeeded, 2) + " FTEs"
          : "–";

        document.getElementById("targetUtilText").textContent =
          targetUtilizationPct + "%";

        document.getElementById("kpiRevenue").textContent =
          formatCurrency(revenue) + " / month";
        document.getElementById("kpiRevenueOnly").textContent =
          formatCurrency(revenue);
        document.getElementById("kpiTeamCost").textContent =
          formatCurrency(monthlyTeamCost);
        document.getElementById("kpiOpsMargin").textContent = isFinite(
          opsMargin
        )
          ? formatPercent(opsMargin)
          : "–";
        document.getElementById("kpiRevenuePerFte").textContent = isFinite(
          revenuePerFte
        )
          ? formatCurrency(revenuePerFte)
          : "–";

        // Interpretation
        let interp = [];
        if (isFinite(utilization)) {
          if (utilization < 0.6) {
            interp.push(
              "Your team appears under‑utilized. Consider consolidating roles, reducing overtime, or increasing volume (e.g., more customers or projects)."
            );
          } else if (utilization <= 0.9) {
            interp.push(
              "Utilization is in a healthy range for most knowledge‑work teams. Monitor quality and cycle time to ensure performance stays stable."
            );
          } else {
            interp.push(
              "Utilization is very high. Expect growing backlogs, slower response times, and higher burnout risk unless you add capacity or reduce workload."
            );
          }
        }
        if (isFinite(ftesNeeded) && fteCount > 0) {
          const diff = ftesNeeded - fteCount;
          if (diff > 0.25) {
            interp.push(
              `You may need approximately ${formatNumber(
                diff,
                2
              )} additional FTEs to reach a sustainable target utilization of ${targetUtilizationPct}%.`
            );
          } else if (diff < -0.25) {
            interp.push(
              `You may have excess capacity of about ${formatNumber(
                -diff,
                2
              )} FTEs at a target utilization of ${targetUtilizationPct}%.`
            );
          }
        }
        if (isFinite(opsMargin)) {
          if (opsMargin < 0) {
            interp.push(
              "This operation is currently running at a negative margin. Review pricing, automation, and staffing levels."
            );
          } else if (opsMargin < 0.3) {
            interp.push(
              "Ops margin is positive but thin. Small efficiency gains or price changes could materially improve profitability."
            );
          } else {
            interp.push(
              "Ops margin is healthy. Focus on maintaining quality and resilience as you scale."
            );
          }
        }
        if (interp.length === 0) {
          interp.push(
            "Adjust the inputs to see utilization, headcount needs, and margin insights for your operation."
          );
        }
        document.getElementById("kpiInterpretation").textContent =
          interp.join(" ");
      }

      function attachBusinessOpsListeners() {
        const ids = [
          "monthlyVolume",
          "avgMinutesPerUnit",
          "workingDaysPerMonth",
          "fteCount",
          "hoursPerFtePerDay",
          "productiveTimeShare",
          "revenuePerUnit",
          "monthlyTeamCost",
          "targetUtilization",
        ];
        ids.forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", recalcBusinessOps);
            el.addEventListener("change", recalcBusinessOps);
          }
        });

        const resetBtn = document.getElementById("resetInputs");
        if (resetBtn) {
          resetBtn.addEventListener("click", () => {
            document.getElementById("monthlyVolume").value = 2000;
            document.getElementById("avgMinutesPerUnit").value = 12;
            document.getElementById("workingDaysPerMonth").value = 21;
            document.getElementById("fteCount").value = 8;
            document.getElementById("hoursPerFtePerDay").value = 7.5;
            document.getElementById("productiveTimeShare").value = 70;
            document.getElementById("revenuePerUnit").value = 50;
            document.getElementById("monthlyTeamCost").value = 60000;
            document.getElementById("targetUtilization").value = 80;
            recalcBusinessOps();
          });
        }

        recalcBusinessOps();
      }

      document.addEventListener("DOMContentLoaded", attachBusinessOpsListeners);
    </script>

