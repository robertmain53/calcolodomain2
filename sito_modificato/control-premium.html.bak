    <script>
      function formatCurrency(value) {
        if (isNaN(value)) return "$0";
        const absVal = Math.abs(value);
        let formatted = value.toFixed(2);
        if (absVal >= 1e9) {
          formatted = (value / 1e9).toFixed(2) + "B";
        } else if (absVal >= 1e6) {
          formatted = (value / 1e6).toFixed(2) + "M";
        } else if (absVal >= 1e3) {
          formatted = (value / 1e3).toFixed(2) + "K";
        }
        return "$" + formatted;
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0.00%";
        return (value * 100).toFixed(2) + "%";
      }

      function calculateControlPremium() {
        const unaffectedPrice = parseFloat(
          document.getElementById("unaffectedPrice").value
        );
        const dealPrice = parseFloat(
          document.getElementById("dealPrice").value
        );
        const sharesOutstanding = parseFloat(
          document.getElementById("sharesOutstanding").value
        );
        const minorityEquity = parseFloat(
          document.getElementById("minorityEquity").value
        );
        const dealEquity = parseFloat(
          document.getElementById("dealEquity").value
        );
        const errorMsg = document.getElementById("errorMsg");
        errorMsg.classList.add("hidden");
        errorMsg.textContent = "";

        let hasError = false;
        if (
          unaffectedPrice <= 0 ||
          dealPrice <= 0 ||
          isNaN(unaffectedPrice) ||
          isNaN(dealPrice)
        ) {
          errorMsg.textContent =
            "Please enter positive values for both unaffected market price and deal price per share.";
          errorMsg.classList.remove("hidden");
          hasError = true;
        }

        if (!hasError) {
          const cpPerShare = dealPrice / unaffectedPrice - 1;
          const dloc = 1 - 1 / (1 + cpPerShare);

          document.getElementById("controlPremiumPct").textContent =
            formatPercent(cpPerShare);
          document.getElementById("impliedMinorityPrice").textContent =
            "$" + unaffectedPrice.toFixed(2);
          document.getElementById("impliedControlPrice").textContent =
            "$" + dealPrice.toFixed(2);
          document.getElementById("dlocPct").textContent = formatPercent(dloc);

          // Per-share -> equity values if shares provided
          const perShareEquityResults = document.getElementById(
            "perShareEquityResults"
          );
          if (!isNaN(sharesOutstanding) && sharesOutstanding > 0) {
            const marketEquity = unaffectedPrice * sharesOutstanding;
            const dealEquityFromShares = dealPrice * sharesOutstanding;
            document.getElementById("marketEquityFromShares").textContent =
              formatCurrency(marketEquity);
            document.getElementById("dealEquityFromShares").textContent =
              formatCurrency(dealEquityFromShares);
            perShareEquityResults.classList.remove("hidden");
          } else {
            perShareEquityResults.classList.add("hidden");
          }
        }

        // Equity value control premium if both values provided
        const equityResults = document.getElementById("equityResults");
        if (
          !isNaN(minorityEquity) &&
          minorityEquity > 0 &&
          !isNaN(dealEquity) &&
          dealEquity > 0
        ) {
          const cpEquity = dealEquity / minorityEquity - 1;
          document.getElementById("minorityEquityOut").textContent =
            formatCurrency(minorityEquity);
          document.getElementById("dealEquityOut").textContent =
            formatCurrency(dealEquity);
          document.getElementById("controlPremiumEquityPct").textContent =
            formatPercent(cpEquity);
          equityResults.classList.remove("hidden");
        } else {
          equityResults.classList.add("hidden");
        }
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function (e) {
          e.preventDefault();
          calculateControlPremium();
        });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function (e) {
          e.preventDefault();
          document.getElementById("unaffectedPrice").value = 20;
          document.getElementById("dealPrice").value = 26;
          document.getElementById("sharesOutstanding").value = "";
          document.getElementById("minorityEquity").value = "";
          document.getElementById("dealEquity").value = "";
          document.getElementById("errorMsg").classList.add("hidden");
          document.getElementById("equityResults").classList.add("hidden");
          document
            .getElementById("perShareEquityResults")
            .classList.add("hidden");
          calculateControlPremium();
        });

      // Initial calculation
      document.addEventListener("DOMContentLoaded", calculateControlPremium);
    </script>

