    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (!isFinite(value)) return "—";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      // Utility: add periods to a date based on frequency
      function addPeriod(date, frequency) {
        const d = new Date(date.getTime());
        switch (frequency) {
          case "weekly":
            d.setDate(d.getDate() + 7);
            break;
          case "biweekly":
            d.setDate(d.getDate() + 14);
            break;
          case "monthly":
            d.setMonth(d.getMonth() + 1);
            break;
          case "annual":
            d.setFullYear(d.getFullYear() + 1);
            break;
        }
        return d;
      }

      function formatDate(date) {
        return date.toLocaleDateString(undefined, {
          year: "numeric",
          month: "short",
          day: "numeric",
        });
      }

      function getPeriodsPerYear(freq) {
        switch (freq) {
          case "weekly":
            return 52;
          case "biweekly":
            return 26;
          case "monthly":
            return 12;
          case "annual":
            return 1;
          default:
            return 12;
        }
      }

      // Core calculation
      function calculateSchedule(options) {
        const {
          principal,
          annualRate,
          years,
          frequency,
          mode, // 'simple' or 'amortized'
          trueSimple,
          extraPerPeriod,
        } = options;

        const m = getPeriodsPerYear(frequency);
        const n = Math.round(years * m);
        const r = annualRate / 100;

        if (principal <= 0 || annualRate < 0 || years <= 0 || n <= 0) {
          return null;
        }

        const today = new Date();
        const baseResult = {};
        const extraResult = {};

        if (mode === "simple" && trueSimple) {
          // True simple interest: I = P * r * t
          const totalInterest = principal * r * years;
          const totalPaid = principal + totalInterest;
          const payment = totalPaid / n;

          baseResult.payment = payment;
          baseResult.totalInterest = totalInterest;
          baseResult.totalPaid = totalPaid;
          baseResult.n = n;

          // Build schedule (base, no extra)
          const scheduleBase = [];
          let balance = principal;
          let date = addPeriod(today, frequency);
          const interestPerPeriod = totalInterest / n;

          for (let k = 1; k <= n; k++) {
            const interest = interestPerPeriod;
            let principalPaid = payment - interest;
            if (k === n) {
              principalPaid = balance;
            }
            balance = Math.max(0, balance - principalPaid);

            scheduleBase.push({
              period: k,
              date: new Date(date),
              payment,
              principal: principalPaid,
              interest,
              extra: 0,
              balance,
            });

            date = addPeriod(date, frequency);
          }

          // Extra schedule: apply extraPerPeriod to principal
          const scheduleExtra = [];
          let balanceExtra = principal;
          let dateExtra = addPeriod(today, frequency);
          let totalInterestExtra = 0;
          let k = 0;

          while (balanceExtra > 0 && k < 100000) {
            k++;
            const interest = interestPerPeriod; // same per-period interest under true simple
            let principalPaid = payment - interest + extraPerPeriod;
            if (principalPaid > balanceExtra + 1e-8) {
              principalPaid = balanceExtra;
            }
            balanceExtra = Math.max(0, balanceExtra - principalPaid);
            totalInterestExtra += interest;

            scheduleExtra.push({
              period: k,
              date: new Date(dateExtra),
              payment: payment + extraPerPeriod,
              principal: principalPaid,
              interest,
              extra: extraPerPeriod,
              balance: balanceExtra,
            });

            dateExtra = addPeriod(dateExtra, frequency);
            if (k > 5000) break;
          }

          extraResult.payment = payment + extraPerPeriod;
          extraResult.totalInterest = totalInterestExtra;
          extraResult.totalPaid = scheduleExtra.reduce(
            (sum, row) => sum + row.payment,
            0
          );
          extraResult.n = scheduleExtra.length;

          return {
            mode: "simple-true",
            base: baseResult,
            extra: extraResult,
            scheduleBase,
            scheduleExtra,
          };
        } else {
          // Amortized (standard) or "simple" with compounding per period
          const i = r / m;
          let payment;

          if (i === 0) {
            payment = principal / n;
          } else {
            const factor = Math.pow(1 + i, n);
            payment = (principal * (i * factor)) / (factor - 1);
          }

          // Base schedule (no extra)
          const scheduleBase = [];
          let balance = principal;
          let date = addPeriod(today, frequency);
          let totalInterest = 0;

          for (let k = 1; k <= n; k++) {
            const interest = balance * i;
            let principalPaid = payment - interest;
            if (k === n) {
              principalPaid = balance;
            }
            balance = Math.max(0, balance - principalPaid);
            totalInterest += interest;

            scheduleBase.push({
              period: k,
              date: new Date(date),
              payment,
              principal: principalPaid,
              interest,
              extra: 0,
              balance,
            });

            date = addPeriod(date, frequency);
          }

          baseResult.payment = payment;
          baseResult.totalInterest = totalInterest;
          baseResult.totalPaid = principal + totalInterest;
          baseResult.n = n;

          // Extra schedule
          const scheduleExtra = [];
          let balanceExtra = principal;
          let dateExtra = addPeriod(today, frequency);
          let totalInterestExtra = 0;
          let k = 0;

          while (balanceExtra > 0 && k < 100000) {
            k++;
            const interest = balanceExtra * i;
            let principalPaid = payment - interest + extraPerPeriod;
            if (principalPaid > balanceExtra + 1e-8) {
              principalPaid = balanceExtra;
            }
            balanceExtra = Math.max(0, balanceExtra - principalPaid);
            totalInterestExtra += interest;

            scheduleExtra.push({
              period: k,
              date: new Date(dateExtra),
              payment: payment + extraPerPeriod,
              principal: principalPaid,
              interest,
              extra: extraPerPeriod,
              balance: balanceExtra,
            });

            dateExtra = addPeriod(dateExtra, frequency);
            if (k > 5000) break;
          }

          extraResult.payment = payment + extraPerPeriod;
          extraResult.totalInterest = totalInterestExtra;
          extraResult.totalPaid = scheduleExtra.reduce(
            (sum, row) => sum + row.payment,
            0
          );
          extraResult.n = scheduleExtra.length;

          return {
            mode: "amortized",
            base: baseResult,
            extra: extraResult,
            scheduleBase,
            scheduleExtra,
          };
        }
      }

      function updateUI(result, options) {
        const { extraPerPeriod } = options;

        const paymentEl = document.getElementById("resultPayment");
        const interestEl = document.getElementById("resultInterest");
        const totalEl = document.getElementById("resultTotal");
        const termEl = document.getElementById("resultTerm");
        const extraImpactEl = document.getElementById("resultExtraImpact");
        const scheduleBody = document.getElementById("scheduleBody");

        if (!result) {
          paymentEl.textContent = "—";
          interestEl.textContent = "—";
          totalEl.textContent = "—";
          termEl.textContent = "—";
          extraImpactEl.textContent = "Please check your inputs.";
          scheduleBody.innerHTML =
            '<tr><td colspan="7" class="px-3 py-4 text-center text-gray-500">Unable to calculate with the current inputs.</td></tr>';
          return;
        }

        const base = result.base;
        const extra = result.extra;

        paymentEl.textContent = formatCurrency(base.payment);
        interestEl.textContent = formatCurrency(base.totalInterest);
        totalEl.textContent = formatCurrency(base.totalPaid);

        // Term description
        const freq = document.getElementById("paymentFrequency").value;
        const m = getPeriodsPerYear(freq);
        const years = base.n / m;
        const yearsInt = Math.floor(years);
        const monthsInt = Math.round((years - yearsInt) * 12);
        let termText = `${base.n} payments`;
        if (yearsInt > 0 || monthsInt > 0) {
          const parts = [];
          if (yearsInt > 0)
            parts.push(`${yearsInt} year${yearsInt !== 1 ? "s" : ""}`);
          if (monthsInt > 0)
            parts.push(`${monthsInt} month${monthsInt !== 1 ? "s" : ""}`);
          termText += ` (~${parts.join(" ")})`;
        }
        termEl.textContent = termText;

        // Extra impact
        if (extraPerPeriod > 0 && extra && extra.n > 0) {
          const paymentsSaved = base.n - extra.n;
          const interestSaved = base.totalInterest - extra.totalInterest;
          const yearsSaved = paymentsSaved / m;
          const yearsSavedInt = Math.floor(yearsSaved);
          const monthsSavedInt = Math.round((yearsSaved - yearsSavedInt) * 12);
          const parts = [];
          if (yearsSavedInt > 0)
            parts.push(
              `${yearsSavedInt} year${yearsSavedInt !== 1 ? "s" : ""}`
            );
          if (monthsSavedInt > 0)
            parts.push(
              `${monthsSavedInt} month${monthsSavedInt !== 1 ? "s" : ""}`
            );
          const timeSavedText = parts.length ? ` (~${parts.join(" ")})` : "";

          extraImpactEl.textContent =
            `With $${extraPerPeriod.toFixed(
              2
            )} extra per payment, you could pay off the loan in ${
              extra.n
            } payments` +
            `${timeSavedText}, saving about ${formatCurrency(
              interestSaved
            )} in interest.`;
        } else {
          extraImpactEl.textContent = "No extra payments entered.";
        }

        // Render schedule (use extra schedule if extraPerPeriod > 0, else base)
        const schedule =
          extraPerPeriod > 0 && extra && extra.scheduleExtra
            ? result.scheduleExtra
            : result.scheduleBase;
        const rows =
          (extraPerPeriod > 0 ? result.scheduleExtra : result.scheduleBase) ||
          schedule;

        if (!rows || rows.length === 0) {
          scheduleBody.innerHTML =
            '<tr><td colspan="7" class="px-3 py-4 text-center text-gray-500">No schedule to display.</td></tr>';
          return;
        }

        let html = "";
        const useExtra = extraPerPeriod > 0;
        const scheduleToUse = useExtra
          ? result.scheduleExtra
          : result.scheduleBase;

        scheduleToUse.forEach((row) => {
          html += `
        <tr class="border-t border-gray-100 hover:bg-gray-50">
          <td class="px-3 py-1.5 text-gray-700">${row.period}</td>
          <td class="px-3 py-1.5 text-gray-700">${formatDate(row.date)}</td>
          <td class="px-3 py-1.5 text-right text-gray-900">${formatCurrency(
            row.payment
          )}</td>
          <td class="px-3 py-1.5 text-right text-blue-800 bg-blue-50/40">${formatCurrency(
            row.principal
          )}</td>
          <td class="px-3 py-1.5 text-right text-amber-800 bg-amber-50/40">${formatCurrency(
            row.interest
          )}</td>
          <td class="px-3 py-1.5 text-right text-gray-700">${
            row.extra ? formatCurrency(row.extra) : "—"
          }</td>
          <td class="px-3 py-1.5 text-right text-gray-900">${formatCurrency(
            row.balance
          )}</td>
        </tr>
      `;
        });

        scheduleBody.innerHTML = html;
      }

      function handleCalculate() {
        const principal = parseFloat(
          document.getElementById("loanAmount").value
        );
        const annualRate = parseFloat(
          document.getElementById("interestRate").value
        );
        const termValue = parseFloat(document.getElementById("loanTerm").value);
        const termUnit = document.getElementById("loanTermUnit").value;
        const frequency = document.getElementById("paymentFrequency").value;
        const extraPerPeriod =
          parseFloat(document.getElementById("extraPayment").value) || 0;
        const trueSimple = document.getElementById("simpleModeToggle").checked;
        const activeMode =
          document
            .getElementById("tab-simple")
            .getAttribute("aria-selected") === "true"
            ? "simple"
            : "amortized";

        const years = termUnit === "years" ? termValue : termValue / 12;

        const options = {
          principal: isFinite(principal) ? principal : 0,
          annualRate: isFinite(annualRate) ? annualRate : 0,
          years: isFinite(years) ? years : 0,
          frequency,
          mode: activeMode,
          trueSimple,
          extraPerPeriod: extraPerPeriod > 0 ? extraPerPeriod : 0,
        };

        const result = calculateSchedule(options);
        updateUI(result, options);
      }

      function handleReset() {
        document.getElementById("loanAmount").value = 10000;
        document.getElementById("interestRate").value = 7.5;
        document.getElementById("loanTerm").value = 5;
        document.getElementById("loanTermUnit").value = "years";
        document.getElementById("paymentFrequency").value = "monthly";
        document.getElementById("extraPayment").value = 0;
        document.getElementById("simpleModeToggle").checked = true;
        document.getElementById("tab-simple").click();
        document.getElementById("resultPayment").textContent = "—";
        document.getElementById("resultInterest").textContent = "—";
        document.getElementById("resultTotal").textContent = "—";
        document.getElementById("resultTerm").textContent = "—";
        document.getElementById("resultExtraImpact").textContent =
          "No extra payments entered.";
        document.getElementById("scheduleBody").innerHTML =
          '<tr><td colspan="7" class="px-3 py-4 text-center text-gray-500">Enter your loan details and click “Calculate” to see the full schedule.</td></tr>';
      }

      function handleExportCsv() {
        const principal = parseFloat(
          document.getElementById("loanAmount").value
        );
        const annualRate = parseFloat(
          document.getElementById("interestRate").value
        );
        const termValue = parseFloat(document.getElementById("loanTerm").value);
        const termUnit = document.getElementById("loanTermUnit").value;
        const frequency = document.getElementById("paymentFrequency").value;
        const extraPerPeriod =
          parseFloat(document.getElementById("extraPayment").value) || 0;
        const trueSimple = document.getElementById("simpleModeToggle").checked;
        const activeMode =
          document
            .getElementById("tab-simple")
            .getAttribute("aria-selected") === "true"
            ? "simple"
            : "amortized";
        const years = termUnit === "years" ? termValue : termValue / 12;

        const options = {
          principal: isFinite(principal) ? principal : 0,
          annualRate: isFinite(annualRate) ? annualRate : 0,
          years: isFinite(years) ? years : 0,
          frequency,
          mode: activeMode,
          trueSimple,
          extraPerPeriod: extraPerPeriod > 0 ? extraPerPeriod : 0,
        };

        const result = calculateSchedule(options);
        if (!result) return;

        const schedule =
          options.extraPerPeriod > 0
            ? result.scheduleExtra
            : result.scheduleBase;
        if (!schedule || schedule.length === 0) return;

        let csv = "Period,Date,Payment,Principal,Interest,Extra,Balance\n";
        schedule.forEach((row) => {
          csv +=
            [
              row.period,
              formatDate(row.date),
              row.payment.toFixed(2),
              row.principal.toFixed(2),
              row.interest.toFixed(2),
              row.extra ? row.extra.toFixed(2) : "0.00",
              row.balance.toFixed(2),
            ].join(",") + "\n";
        });

        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        const modeLabel = activeMode === "simple" ? "simple" : "amortized";
        a.href = url;
        a.download = `simple-loan-schedule-${modeLabel}.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      // Tab handling
      function activateTab(tabId) {
        const simpleTab = document.getElementById("tab-simple");
        const amortizedTab = document.getElementById("tab-amortized");
        const simpleSettings = document.getElementById("simple-settings");

        if (tabId === "tab-simple") {
          simpleTab.classList.add("tab-active");
          simpleTab.classList.remove("tab-inactive");
          simpleTab.setAttribute("aria-selected", "true");

          amortizedTab.classList.remove("tab-active");
          amortizedTab.classList.add("tab-inactive");
          amortizedTab.setAttribute("aria-selected", "false");

          simpleSettings.classList.remove("hidden");
        } else {
          amortizedTab.classList.add("tab-active");
          amortizedTab.classList.remove("tab-inactive");
          amortizedTab.setAttribute("aria-selected", "true");

          simpleTab.classList.remove("tab-active");
          simpleTab.classList.add("tab-inactive");
          simpleTab.setAttribute("aria-selected", "false");

          simpleSettings.classList.add("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculateBtn")
          .addEventListener("click", handleCalculate);
        document
          .getElementById("resetBtn")
          .addEventListener("click", handleReset);
        document
          .getElementById("exportCsvBtn")
          .addEventListener("click", handleExportCsv);

        document
          .getElementById("tab-simple")
          .addEventListener("click", function () {
            activateTab("tab-simple");
            handleCalculate();
          });
        document
          .getElementById("tab-amortized")
          .addEventListener("click", function () {
            activateTab("tab-amortized");
            handleCalculate();
          });

        // Auto-calc on initial load with defaults
        handleCalculate();
      });

