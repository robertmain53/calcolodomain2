    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        ?.addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          if (!menu) return;
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", String(isHidden));
        });

      // Ideal Gas Law Calculator Logic
      (function () {
        const solveButtons = document.querySelectorAll(".solve-btn");
        const rButtons = document.querySelectorAll(".r-btn");
        const form = document.getElementById("idealGasForm");
        const errorEl = document.getElementById("calcError");
        const resultCard = document.getElementById("resultCard");
        const resultMain = document.getElementById("resultMain");
        const resultSecondary = document.getElementById("resultSecondary");
        const stepByStep = document.getElementById("stepByStep");

        let solveFor = "P";

        function setSolveFor(target) {
          solveFor = target;
          solveButtons.forEach((btn) => {
            if (btn.dataset.solve === target) {
              btn.classList.remove(
                "bg-white",
                "text-gray-700",
                "border-gray-300"
              );
              btn.classList.add("bg-blue-600", "text-white", "border-blue-600");
            } else {
              btn.classList.add("bg-white", "text-gray-700", "border-gray-300");
              btn.classList.remove(
                "bg-blue-600",
                "text-white",
                "border-blue-600"
              );
            }
          });
        }

        solveButtons.forEach((btn) => {
          btn.addEventListener("click", () => setSolveFor(btn.dataset.solve));
        });

        // R selection
        rButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const rVal = btn.dataset.r;
            const rUnit = btn.dataset.runit;
            document.getElementById("rValue").value = rVal;
            document.getElementById("rUnit").value = rUnit;

            rButtons.forEach((b) => {
              if (b === btn) {
                b.classList.remove(
                  "bg-white",
                  "text-gray-700",
                  "border-gray-300"
                );
                b.classList.add(
                  "bg-blue-50",
                  "text-blue-700",
                  "border-blue-200"
                );
              } else {
                b.classList.add("bg-white", "text-gray-700", "border-gray-300");
                b.classList.remove(
                  "bg-blue-50",
                  "text-blue-700",
                  "border-blue-200"
                );
              }
            });
          });
        });

        function toKelvin(value, unit) {
          const T = Number(value);
          if (unit === "K") return T;
          if (unit === "C") return T + 273.15;
          if (unit === "F") return ((T - 32) * 5) / 9 + 273.15;
          return T;
        }

        function fromKelvin(Tk, unit) {
          if (unit === "K") return Tk;
          if (unit === "C") return Tk - 273.15;
          if (unit === "F") return ((Tk - 273.15) * 9) / 5 + 32;
          return Tk;
        }

        // Pressure conversions to/from atm
        function pressureToAtm(P, unit) {
          const val = Number(P);
          switch (unit) {
            case "atm":
              return val;
            case "Pa":
              return val / 101325;
            case "kPa":
              return val / 101.325;
            case "bar":
              return val / 1.01325;
            case "mmHg":
              return val / 760;
            case "psi":
              return val / 14.6959;
            default:
              return val;
          }
        }

        function pressureFromAtm(Patm, unit) {
          switch (unit) {
            case "atm":
              return Patm;
            case "Pa":
              return Patm * 101325;
            case "kPa":
              return Patm * 101.325;
            case "bar":
              return Patm * 1.01325;
            case "mmHg":
              return Patm * 760;
            case "psi":
              return Patm * 14.6959;
            default:
              return Patm;
          }
        }

        // Volume conversions to/from L
        function volumeToL(V, unit) {
          const val = Number(V);
          switch (unit) {
            case "L":
              return val;
            case "m3":
              return val * 1000;
            case "mL":
              return val / 1000;
            case "ft3":
              return val * 28.3168;
            default:
              return val;
          }
        }

        function volumeFromL(VL, unit) {
          switch (unit) {
            case "L":
              return VL;
            case "m3":
              return VL / 1000;
            case "mL":
              return VL * 1000;
            case "ft3":
              return VL / 28.3168;
            default:
              return VL;
          }
        }

        // Moles conversions
        function molesToMol(n, unit) {
          const val = Number(n);
          switch (unit) {
            case "mol":
              return val;
            case "mmol":
              return val / 1000;
            default:
              return val;
          }
        }

        function molesFromMol(nmol, unit) {
          switch (unit) {
            case "mol":
              return nmol;
            case "mmol":
              return nmol * 1000;
            default:
              return nmol;
          }
        }

        function formatNumber(x, digits = 4) {
          if (!isFinite(x)) return "NaN";
          const abs = Math.abs(x);
          if (abs !== 0 && (abs < 1e-3 || abs >= 1e5)) {
            return x.toExponential(digits - 1);
          }
          return Number(x.toFixed(digits)).toString();
        }

        document
          .getElementById("calculateBtn")
          .addEventListener("click", () => {
            errorEl.textContent = "";
            resultCard.classList.add("hidden");
            stepByStep.innerHTML = "";

            const Pval = document.getElementById("pressureValue").value;
            const Punit = document.getElementById("pressureUnit").value;
            const Vval = document.getElementById("volumeValue").value;
            const Vunit = document.getElementById("volumeUnit").value;
            const nval = document.getElementById("molesValue").value;
            const nunit = document.getElementById("molesUnit").value;
            const Tval = document.getElementById("temperatureValue").value;
            const Tunit = document.getElementById("temperatureUnit").value;
            const Rval = document.getElementById("rValue").value;

            if (!Rval || Number(Rval) <= 0) {
              errorEl.textContent =
                "Please enter a valid positive value for the gas constant R.";
              return;
            }
            const R = Number(Rval);

            // Count how many variables are missing
            const missing = [
              { key: "P", val: Pval },
              { key: "V", val: Vval },
              { key: "n", val: nval },
              { key: "T", val: Tval },
            ].filter((v) => v.val === "" || v.val === null);

            if (missing.length === 0) {
              errorEl.textContent =
                "Leave exactly one variable blank (P, V, n, or T) to solve for it.";
              return;
            }
            if (missing.length > 1) {
              errorEl.textContent =
                "Please provide three variables and leave only the one you want to solve for blank.";
              return;
            }

            // Override solveFor based on which is actually blank
            const missingKey = missing[0].key;
            setSolveFor(missingKey);

            try {
              let P_atm, V_L, n_mol, T_K;

              if (missingKey !== "P") {
                if (Number(Pval) <= 0)
                  throw new Error("Pressure must be positive.");
                P_atm = pressureToAtm(Pval, Punit);
              }
              if (missingKey !== "V") {
                if (Number(Vval) <= 0)
                  throw new Error("Volume must be positive.");
                V_L = volumeToL(Vval, Vunit);
              }
              if (missingKey !== "n") {
                if (Number(nval) <= 0)
                  throw new Error("Amount of substance must be positive.");
                n_mol = molesToMol(nval, nunit);
              }
              if (missingKey !== "T") {
                T_K = toKelvin(Tval, Tunit);
                if (T_K <= 0)
                  throw new Error(
                    "Absolute temperature must be greater than 0 K."
                  );
              }

              // We will interpret R as being in L·atm/(mol·K) for the internal atm & L system.
              let solvedValueSI;
              let formulaStr = "";
              let substitutionStr = "";
              let finalUnit = "";

              if (missingKey === "P") {
                // P = nRT / V
                const P_atm_solved = (n_mol * R * T_K) / V_L;
                solvedValueSI = pressureFromAtm(P_atm_solved, Punit);
                formulaStr = "P = nRT / V";
                substitutionStr = `P = (${formatNumber(
                  n_mol
                )} mol × ${formatNumber(R)} × ${formatNumber(
                  T_K
                )} K) / ${formatNumber(V_L)} L`;
                finalUnit = Punit;
              } else if (missingKey === "V") {
                // V = nRT / P
                const V_L_solved = (n_mol * R * T_K) / P_atm;
                solvedValueSI = volumeFromL(V_L_solved, Vunit);
                formulaStr = "V = nRT / P";
                substitutionStr = `V = (${formatNumber(
                  n_mol
                )} mol × ${formatNumber(R)} × ${formatNumber(
                  T_K
                )} K) / ${formatNumber(P_atm)} atm`;
                finalUnit = Vunit;
              } else if (missingKey === "n") {
                // n = PV / (RT)
                const n_mol_solved = (P_atm * V_L) / (R * T_K);
                solvedValueSI = molesFromMol(n_mol_solved, nunit);
                formulaStr = "n = PV / (RT)";
                substitutionStr = `n = (${formatNumber(
                  P_atm
                )} atm × ${formatNumber(V_L)} L) / (${formatNumber(
                  R
                )} × ${formatNumber(T_K)} K)`;
                finalUnit = nunit;
              } else if (missingKey === "T") {
                // T = PV / (nR)
                const T_K_solved = (P_atm * V_L) / (n_mol * R);
                const T_out = fromKelvin(T_K_solved, Tunit);
                solvedValueSI = T_out;
                formulaStr = "T = PV / (nR)";
                substitutionStr = `T = (${formatNumber(
                  P_atm
                )} atm × ${formatNumber(V_L)} L) / (${formatNumber(
                  n_mol
                )} mol × ${formatNumber(R)})`;
                finalUnit = Tunit;
              }

              const labelMap = {
                P: "Pressure P",
                V: "Volume V",
                n: "Amount of substance n",
                T: "Temperature T",
              };
              const symbolMap = { P: "P", V: "V", n: "n", T: "T" };

              resultMain.textContent = `${
                labelMap[missingKey]
              } = ${formatNumber(solvedValueSI)} ${finalUnit}`;
              resultSecondary.textContent = `Solved using ${formulaStr} with R = ${R} (${
                document.getElementById("rUnit").value
              }).`;
              resultCard.classList.remove("hidden");

              // Step-by-step
              const steps = [];
              steps.push(
                `<p><strong>1.</strong> Start from the ideal gas law: <code>PV = nRT</code>.</p>`
              );
              steps.push(
                `<p><strong>2.</strong> Rearrange to solve for <strong>${symbolMap[missingKey]}</strong>: <code>${formulaStr}</code>.</p>`
              );
              steps.push(
                `<p><strong>3.</strong> Substitute the known values (internally converted to atm, L, mol, and K):<br><code>${substitutionStr}</code>.</p>`
              );
              steps.push(
                `<p><strong>4.</strong> Compute the result and convert back to your selected unit: <code>${
                  symbolMap[missingKey]
                } = ${formatNumber(solvedValueSI)} ${finalUnit}</code>.</p>`
              );
              stepByStep.innerHTML = steps.join("");
            } catch (e) {
              errorEl.textContent =
                e.message || "An error occurred. Please check your inputs.";
            }
          });

        document.getElementById("resetBtn").addEventListener("click", () => {
          form.reset();
          document.getElementById("pressureUnit").value = "atm";
          document.getElementById("volumeUnit").value = "L";
          document.getElementById("molesUnit").value = "mol";
          document.getElementById("temperatureUnit").value = "K";
          document.getElementById("rValue").value = "0.082057";
          document.getElementById("rUnit").value = "L·atm/(mol·K)";
          errorEl.textContent = "";
          resultCard.classList.add("hidden");
          stepByStep.innerHTML = "";
          setSolveFor("P");
        });

        // Initialize default R button highlight
        rButtons[0]?.click();
      })();
    </script>

