      function calcIncomeTax(income, bands) {
        let tax = 0;
        let prevLimit = 0;
        for (const band of bands) {
          const upper = band.upTo;
          if (income <= prevLimit) break;
          const taxable = Math.min(income, upper) - prevLimit;
          if (taxable > 0) {
            tax += taxable * band.rate;
          }
          prevLimit = upper;
          if (!isFinite(upper)) break;
        }
        return tax;
      }

      function formatMoney(value, currency) {
        const symbol = currency === "EUR" ? "€" : "£";
        return (
          symbol + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        return (value * 100).toFixed(1) + "%";
      }

      function getSocialRate(model, employmentType) {
        return employmentType === "self"
          ? model.socialSelf
          : model.socialEmployee;
      }

      function computeCountryResult(
        income,
        countryCode,
        employmentType,
        vatRate,
        spendShare
      ) {
        const model = COUNTRY_MODELS[countryCode];
        const incomeTax = calcIncomeTax(income, model.bands);
        const socialRate = getSocialRate(model, employmentType);
        const social = income * socialRate;
        const net = Math.max(0, income - incomeTax - social);
        const vatSpend = net * spendShare;
        const vat = vatSpend * vatRate;
        const totalTax = incomeTax + social + vat;
        const effectiveRate = income > 0 ? totalTax / income : 0;
        return { model, incomeTax, social, net, vat, totalTax, effectiveRate };
      }

      document.addEventListener("DOMContentLoaded", () => {
        const currencyEl = document.getElementById("currency");
        const currencySymbolEl = document.getElementById("currency-symbol");
        const incomeEl = document.getElementById("gross-income");
        const employmentEl = document.getElementById("employment-type");
        const countryAEl = document.getElementById("country-a");
        const countryBEl = document.getElementById("country-b");
        const vatRateEl = document.getElementById("vat-rate");
        const spendShareEl = document.getElementById("spend-share");
        const spendShareLabelEl = document.getElementById("spend-share-label");
        const calcBtn = document.getElementById("calculate-btn");
        const swapBtn = document.getElementById("swap-btn");
        const resetBtn = document.getElementById("reset-btn");

        const resultsSection = document.getElementById("results-section");
        const resultsSummary = document.getElementById("results-summary");
        const resultsBody = document.getElementById("results-body");
        const colCountryA = document.getElementById("col-country-a");
        const colCountryB = document.getElementById("col-country-b");
        const notesA = document.getElementById("country-a-notes");
        const notesB = document.getElementById("country-b-notes");

        currencyEl.addEventListener("change", () => {
          currencySymbolEl.textContent = currencyEl.value === "EUR" ? "€" : "£";
        });

        spendShareEl.addEventListener("input", () => {
          spendShareLabelEl.textContent = spendShareEl.value + "%";
        });

        swapBtn.addEventListener("click", () => {
          const tmp = countryAEl.value;
          countryAEl.value = countryBEl.value;
          countryBEl.value = tmp;
          if (!resultsSection.classList.contains("hidden")) {
            calcBtn.click();
          }
        });

        resetBtn.addEventListener("click", () => {
          currencyEl.value = "GBP";
          currencySymbolEl.textContent = "£";
          incomeEl.value = 60000;
          employmentEl.value = "employee";
          countryAEl.value = "UK";
          countryBEl.value = "DE";
          vatRateEl.value = "0.20";
          spendShareEl.value = 70;
          spendShareLabelEl.textContent = "70%";
          resultsSection.classList.add("hidden");
        });

        calcBtn.addEventListener("click", () => {
          const income = parseFloat(incomeEl.value);
          if (isNaN(income) || income <= 0) {
            alert("Please enter a positive annual gross income.");
            incomeEl.focus();
            return;
          }
          const employmentType = employmentEl.value;
          const countryA = countryAEl.value;
          const countryB = countryBEl.value;
          const vatRate = parseFloat(vatRateEl.value);
          const spendShare = parseFloat(spendShareEl.value) / 100;

          if (countryA === countryB) {
            alert("Please choose two different countries to compare.");
            return;
          }

          const resA = computeCountryResult(
            income,
            countryA,
            employmentType,
            vatRate,
            spendShare
          );
          const resB = computeCountryResult(
            income,
            countryB,
            employmentType,
            vatRate,
            spendShare
          );

          const currency = currencyEl.value;

          colCountryA.textContent = resA.model.name;
          colCountryB.textContent = resB.model.name;

          const rows = [
            {
              label: "Income tax",
              a: formatMoney(resA.incomeTax, currency),
              b: formatMoney(resB.incomeTax, currency),
            },
            {
              label: "Social contributions",
              a: formatMoney(resA.social, currency),
              b: formatMoney(resB.social, currency),
            },
            {
              label: "Net income (after income tax & social)",
              a: formatMoney(resA.net, currency),
              b: formatMoney(resB.net, currency),
            },
            {
              label: "Estimated VAT on spending",
              a: formatMoney(resA.vat, currency),
              b: formatMoney(resB.vat, currency),
            },
            {
              label: "Total tax incl. VAT",
              a: formatMoney(resA.totalTax, currency),
              b: formatMoney(resB.totalTax, currency),
            },
            {
              label: "Effective total tax rate",
              a: formatPercent(resA.effectiveRate),
              b: formatPercent(resB.effectiveRate),
            },
          ];

          resultsBody.innerHTML = rows
            .map(
              (row) => `
        <tr>
          <td class="text-left">${row.label}</td>
          <td class="text-right">${row.a}</td>
          <td class="text-right">${row.b}</td>
        </tr>
      `
            )
            .join("");

          const better =
            resA.effectiveRate < resB.effectiveRate
              ? resA.model.name
              : resB.model.name;
          const diff = Math.abs(resA.effectiveRate - resB.effectiveRate);

          resultsSummary.textContent =
            `${better} shows a lower estimated overall tax burden at this income level. ` +
            `The difference in effective total tax rate is about ${formatPercent(
              diff
            )}. ` +
            `Remember: these are simplified, illustrative figures only.`;

          notesA.innerHTML = `
        <h3 class="font-semibold mb-1 text-gray-800">${
          resA.model.name
        } assumptions</h3>
        <p>${
          employmentType === "self"
            ? resA.model.notesSelf
            : resA.model.notesEmployee
        }</p>
      `;
          notesB.innerHTML = `
        <h3 class="font-semibold mb-1 text-gray-800">${
          resB.model.name
        } assumptions</h3>
        <p>${
          employmentType === "self"
            ? resB.model.notesSelf
            : resB.model.notesEmployee
        }</p>
      `;

          resultsSection.classList.remove("hidden");
          resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
