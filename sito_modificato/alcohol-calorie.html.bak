    <script>
      // Utility: create a drink row
      function createDrinkRow(index) {
        const row = document.createElement("div");
        row.className =
          "drink-row border border-gray-200 rounded-md p-3 bg-white shadow-sm";
        row.dataset.index = index;

        row.innerHTML = `
      <div class="flex justify-between items-center mb-2">
        <div class="flex items-center gap-2">
          <span class="text-sm font-semibold text-gray-800">Drink #${
            index + 1
          }</span>
          <input type="text" class="drink-name text-xs border border-gray-200 rounded px-2 py-1" placeholder="e.g. Beer, Wine, Gin & Tonic">
        </div>
        <button type="button" class="remove-drink text-xs text-red-600 hover:underline">Remove</button>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mb-2">
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">Volume</label>
          <div class="flex">
            <input type="number" min="0" step="0.1" class="drink-volume flex-1 border border-gray-300 rounded-l px-2 py-1 text-sm" placeholder="330">
            <span class="volume-unit inline-flex items-center px-2 border border-l-0 border-gray-300 rounded-r text-xs bg-gray-50">mL</span>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">ABV (%)</label>
          <input type="number" min="0" max="100" step="0.1" class="drink-abv w-full border border-gray-300 rounded px-2 py-1 text-sm" placeholder="5">
        </div>
        <div>
          <label class="block text-xs font-medium text-gray-700 mb-1">Extra kcal (sugars/mixers)</label>
          <input type="number" min="0" step="1" class="drink-extra-kcal w-full border border-gray-300 rounded px-2 py-1 text-sm" placeholder="0">
        </div>
      </div>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 text-xs text-gray-600">
        <div>
          <span>Alcohol grams: </span><span class="drink-grams font-semibold">0 g</span>
        </div>
        <div>
          <span>Alcohol kcal: </span><span class="drink-kcal font-semibold">0 kcal</span>
        </div>
        <div>
          <span>Standard drinks: </span><span class="drink-std font-semibold">0</span>
        </div>
      </div>
    `;
        return row;
      }

      (function () {
        const drinksContainer = document.getElementById("drinks-container");
        const addDrinkBtn = document.getElementById("add-drink-btn");
        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const unitSystemSelect = document.getElementById("unit-system");
        const resultsPanel = document.getElementById("results-panel");
        const totalKcalEl = document.getElementById("total-kcal");
        const totalGramsEl = document.getElementById("total-grams");
        const totalStdEl = document.getElementById("total-standard-drinks");
        const kcalPerStdEl = document.getElementById("kcal-per-standard");
        const stdNoteEl = document.getElementById("standard-drink-note");
        const interpretationEl = document.getElementById(
          "results-interpretation"
        );

        let drinkIndex = 0;

        function getStandardDrinkGrams() {
          // Simple heuristic based on unit system
          const system = unitSystemSelect.value;
          if (system === "imperial") {
            // Use US definition
            return { grams: 14, label: "US standard drink (14 g alcohol)" };
          }
          // Metric: use 10 g as generic European standard
          return {
            grams: 10,
            label: "Standard drink (10 g alcohol, typical EU)",
          };
        }

        function updateVolumeUnits() {
          const isMetric = unitSystemSelect.value === "metric";
          document.querySelectorAll(".volume-unit").forEach((span) => {
            span.textContent = isMetric ? "mL" : "fl oz";
          });
        }

        function ensureAtLeastOneRow() {
          if (!drinksContainer.querySelector(".drink-row")) {
            addDrinkRow();
          }
        }

        function addDrinkRow(preset) {
          const row = createDrinkRow(drinkIndex++);
          drinksContainer.appendChild(row);
          if (preset) {
            const volInput = row.querySelector(".drink-volume");
            const abvInput = row.querySelector(".drink-abv");
            const nameInput = row.querySelector(".drink-name");
            if (preset.name) nameInput.value = preset.name;
            volInput.value = preset.volume;
            abvInput.value = preset.abv;
          }
          attachRowEvents(row);
          updateVolumeUnits();
        }

        function attachRowEvents(row) {
          row.querySelector(".remove-drink").addEventListener("click", () => {
            row.remove();
            ensureAtLeastOneRow();
          });

          ["input", "change"].forEach((evt) => {
            row.addEventListener(evt, () => {
              // Optional: live per-row update
              computePerRow(row);
            });
          });
        }

        function toMl(volume, system) {
          if (system === "metric") return volume;
          // imperial: fl oz -> mL
          return volume * 29.5735;
        }

        function computePerRow(row) {
          const system = unitSystemSelect.value;
          const volInput = row.querySelector(".drink-volume");
          const abvInput = row.querySelector(".drink-abv");
          const extraInput = row.querySelector(".drink-extra-kcal");

          const gramsEl = row.querySelector(".drink-grams");
          const kcalEl = row.querySelector(".drink-kcal");
          const stdEl = row.querySelector(".drink-std");

          const vol = parseFloat(volInput.value);
          const abv = parseFloat(abvInput.value);
          const extra = parseFloat(extraInput.value) || 0;

          if (isNaN(vol) || isNaN(abv) || vol <= 0 || abv <= 0) {
            gramsEl.textContent = "0 g";
            kcalEl.textContent = "0 kcal";
            stdEl.textContent = "0";
            return { grams: 0, kcal: 0, std: 0 };
          }

          const volMl = toMl(vol, system);
          const volAlcoholMl = volMl * (abv / 100);
          const grams = volAlcoholMl * 0.789;
          const kcalAlcohol = grams * 7;
          const stdInfo = getStandardDrinkGrams();
          const stdDrinks = grams / stdInfo.grams;

          gramsEl.textContent = grams.toFixed(1) + " g";
          kcalEl.textContent = Math.round(kcalAlcohol + extra) + " kcal";
          stdEl.textContent = stdDrinks.toFixed(2);

          return { grams, kcal: kcalAlcohol + extra, std: stdDrinks };
        }

        function calculateTotals() {
          const rows = Array.from(
            drinksContainer.querySelectorAll(".drink-row")
          );
          if (!rows.length) return;

          let totalGrams = 0;
          let totalKcal = 0;
          let totalStd = 0;

          rows.forEach((row) => {
            const res = computePerRow(row);
            totalGrams += res.grams;
            totalKcal += res.kcal;
            totalStd += res.std;
          });

          const stdInfo = getStandardDrinkGrams();

          totalKcalEl.textContent = Math.round(totalKcal) + " kcal";
          totalGramsEl.textContent = totalGrams.toFixed(1) + " g";
          totalStdEl.textContent = totalStd.toFixed(2);
          stdNoteEl.textContent = stdInfo.label;

          if (totalStd > 0) {
            const kcalPerStd = totalKcal / totalStd;
            kcalPerStdEl.textContent =
              Math.round(kcalPerStd) + " kcal/standard drink";
          } else {
            kcalPerStdEl.textContent = "–";
          }

          let interp = "";
          if (totalKcal > 0) {
            interp += `Your selection contains about ${Math.round(
              totalKcal
            )} kcal from alcohol`;
            if (totalStd > 0) {
              interp += `, equivalent to roughly ${totalStd.toFixed(
                1
              )} standard drinks (${stdInfo.label}).`;
            } else {
              interp += ".";
            }
          } else {
            interp =
              "Enter volume and ABV for at least one drink to see calorie and alcohol estimates.";
          }
          interpretationEl.textContent = interp;
          resultsPanel.classList.remove("hidden");
        }

        function resetCalculator() {
          drinksContainer.innerHTML = "";
          drinkIndex = 0;
          addDrinkRow();
          resultsPanel.classList.add("hidden");
        }

        // Preset buttons
        document.querySelectorAll(".preset-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const type = btn.dataset.preset;
            const system = unitSystemSelect.value;
            let preset;
            if (type === "beer") {
              preset =
                system === "metric"
                  ? { name: "Beer", volume: 330, abv: 5 }
                  : { name: "Beer", volume: 12, abv: 5 }; // 12 fl oz
            } else if (type === "wine") {
              preset =
                system === "metric"
                  ? { name: "Wine", volume: 150, abv: 13 }
                  : { name: "Wine", volume: 5, abv: 13 }; // 5 fl oz
            } else if (type === "spirit") {
              preset =
                system === "metric"
                  ? { name: "Spirit", volume: 40, abv: 40 }
                  : { name: "Spirit", volume: 1.5, abv: 40 }; // 1.5 fl oz
            } else if (type === "cocktail") {
              preset =
                system === "metric"
                  ? { name: "Cocktail", volume: 250, abv: 12 }
                  : { name: "Cocktail", volume: 8, abv: 12 }; // ~8 fl oz
            }
            addDrinkRow(preset);
          });
        });

        // Event bindings
        addDrinkBtn.addEventListener("click", () => addDrinkRow());
        calculateBtn.addEventListener("click", calculateTotals);
        resetBtn.addEventListener("click", resetCalculator);
        unitSystemSelect.addEventListener("change", () => {
          updateVolumeUnits();
          // Recompute if results are visible
          if (!resultsPanel.classList.contains("hidden")) {
            calculateTotals();
          } else {
            // Update per-row display
            drinksContainer
              .querySelectorAll(".drink-row")
              .forEach((row) => computePerRow(row));
          }
        });

        // Initialize
        addDrinkRow();
      })();
    </script>

