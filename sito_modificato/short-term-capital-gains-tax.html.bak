      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          abs.toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function computeTax(taxableIncome, year, status) {
        const brackets = TAX_BRACKETS[year][status];
        let remaining = Math.max(0, taxableIncome);
        let lowerLimit = 0;
        let tax = 0;
        const breakdown = [];

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, bracket.upTo - lowerLimit);
          if (span > 0) {
            const taxForBracket = span * bracket.rate;
            breakdown.push({
              from: lowerLimit,
              to: bracket.upTo,
              amount: span,
              rate: bracket.rate,
              tax: taxForBracket,
            });
            tax += taxForBracket;
            remaining -= span;
          }
          lowerLimit = bracket.upTo;
        }

        const marginalRate = breakdown.length
          ? breakdown[breakdown.length - 1].rate
          : 0;
        return { tax, breakdown, marginalRate };
      }

      function renderBracketTable(breakdown) {
        if (!breakdown || !breakdown.length) return "";
        let rows = "";
        breakdown.forEach((b, idx) => {
          rows += `
        <tr class="${idx % 2 === 0 ? "bg-white" : "bg-gray-50"}">
          <td class="px-2 py-1 whitespace-nowrap text-right">$${b.from.toLocaleString()}</td>
          <td class="px-2 py-1 whitespace-nowrap text-right">${
            b.to === Infinity ? "and up" : "$" + b.to.toLocaleString()
          }</td>
          <td class="px-2 py-1 whitespace-nowrap text-right">${formatCurrency(
            b.amount
          )}</td>
          <td class="px-2 py-1 whitespace-nowrap text-right">${formatPercent(
            b.rate * 100
          )}</td>
          <td class="px-2 py-1 whitespace-nowrap text-right">${formatCurrency(
            b.tax
          )}</td>
        </tr>`;
        });
        return `
      <table class="min-w-full border border-gray-200 rounded-md">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-2 py-1 text-left">Bracket from</th>
            <th class="px-2 py-1 text-left">Bracket to</th>
            <th class="px-2 py-1 text-right">Taxed amount</th>
            <th class="px-2 py-1 text-right">Rate</th>
            <th class="px-2 py-1 text-right">Tax</th>
          </tr>
        </thead>
        <tbody>${rows}</tbody>
      </table>`;
      }

      function calculate() {
        const year = document.getElementById("tax-year").value;
        const status = document.getElementById("filing-status").value;
        const incomeBefore =
          parseFloat(document.getElementById("income-before-gains").value) || 0;
        const gains =
          parseFloat(document.getElementById("short-term-gains").value) || 0;
        const deductionsType = document.getElementById("deductions-type").value;
        const itemizedAmount =
          parseFloat(document.getElementById("itemized-amount").value) || 0;

        const stdDeduction = TAX_BRACKETS[year].standardDeduction[status] || 0;

        // Interpret "incomeBefore" as taxable income by default.
        // If user wants to approximate deductions, adjust back to AGI-like and reapply chosen deduction.
        let taxableBefore = Math.max(0, incomeBefore);
        if (deductionsType === "standard") {
          // Assume incomeBefore is taxable; no change.
        } else if (deductionsType === "itemized") {
          // Treat incomeBefore as taxable with standard deduction, back out to AGI, then apply itemized.
          const approxAGI = taxableBefore + stdDeduction;
          taxableBefore = Math.max(0, approxAGI - itemizedAmount);
        } else if (deductionsType === "none") {
          // Treat incomeBefore as taxable with no deductions.
        }

        const taxableAfter = Math.max(0, taxableBefore + gains);

        const before = computeTax(taxableBefore, year, status);
        const after = computeTax(taxableAfter, year, status);

        const extraTax = after.tax - before.tax;
        const effectiveRate = gains > 0 ? (extraTax / gains) * 100 : 0;

        document.getElementById("res-income-before").textContent =
          formatCurrency(taxableBefore);
        document.getElementById("res-income-after").textContent =
          formatCurrency(taxableAfter);
        document.getElementById("res-tax-before").textContent = formatCurrency(
          before.tax
        );
        document.getElementById("res-tax-after").textContent = formatCurrency(
          after.tax
        );
        document.getElementById("res-extra-tax").textContent =
          formatCurrency(extraTax);
        document.getElementById("res-effective-rate").textContent =
          gains !== 0 ? formatPercent(effectiveRate) : "n/a";
        document.getElementById("res-marginal-rate").textContent =
          formatPercent(after.marginalRate * 100);

        const noteEl = document.getElementById("res-note");
        if (gains > 0) {
          noteEl.textContent = `Your short-term gains increased your federal tax by ${formatCurrency(
            extraTax
          )}, an effective rate of ${formatPercent(
            effectiveRate
          )} on those gains.`;
        } else if (gains < 0) {
          noteEl.textContent = `Your net short-term loss reduced your estimated federal tax by ${formatCurrency(
            -extraTax
          )} (subject to IRS limits on deducting capital losses).`;
        } else {
          noteEl.textContent =
            "Enter a non-zero gain or loss amount to see the impact on your tax.";
        }

        const bracketSection = document.getElementById("bracket-breakdown");
        const bracketTable = document.getElementById("bracket-table");
        bracketTable.innerHTML = renderBracketTable(after.breakdown);
        bracketSection.classList.remove("hidden");
      }

