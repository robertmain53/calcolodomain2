      // Unit handling
      let useImperial = true; // true = inches/yards, false = cm/meters

      function updateUnitLabels() {
        const inch = useImperial ? "in" : "cm";
        const yard = useImperial ? "yd" : "m";

        document.getElementById("fabric-width-unit").textContent = inch;
        document.getElementById("piece-width-unit").textContent = inch;
        document.getElementById("piece-length-unit").textContent = inch;
        document.getElementById("seam-allowance-unit").textContent = inch;

        document.getElementById("circle-waist-unit").textContent = inch;
        document.getElementById("circle-length-unit").textContent = inch;
        document.getElementById("circle-hem-unit").textContent = inch;
        document.getElementById("circle-waist-sa-unit").textContent = inch;
        document.getElementById("circle-fabric-width-unit").textContent = inch;

        document.getElementById("bind-edge-length-unit").textContent = inch;
        document.getElementById("bind-strip-width-unit").textContent = inch;
        document.getElementById("bind-fabric-width-unit").textContent = inch;

        document.getElementById("elastic-body-unit").textContent = inch;
        document.getElementById("elastic-ease-unit").textContent = inch;
        document.getElementById("elastic-overlap-unit").textContent = inch;
        document.getElementById("casing-height-unit").textContent = inch;
        document.getElementById("casing-extra-unit").textContent = inch;

        document.getElementById("unit-label").textContent = useImperial
          ? "Current: inches / yards"
          : "Current: centimeters / meters";
      }

      function lengthToBase(value) {
        // convert to inches if imperial, cm if metric
        return parseFloat(value);
      }

      function baseToLongLength(len) {
        // convert inches->yards or cm->meters
        if (useImperial) {
          return len / 36; // inches to yards
        } else {
          return len / 100; // cm to meters
        }
      }

      function formatLength(len) {
        const unit = useImperial ? "yd" : "m";
        return len.toFixed(2) + " " + unit;
      }

      function formatAltLength(len) {
        if (useImperial) {
          const meters = (len * 2.54) / 100; // inches to meters
          return meters.toFixed(2) + " m";
        } else {
          const yards = len / 2.54 / 36; // cm to yards
          return yards.toFixed(2) + " yd";
        }
      }

