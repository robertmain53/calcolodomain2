      document.getElementById("unit-imperial").addEventListener("click", () => {
        useImperial = true;
        document.getElementById("unit-imperial").classList.add("tab-active");
        document.getElementById("unit-metric").classList.remove("tab-active");
        updateUnitLabels();
      });
      document.getElementById("unit-metric").addEventListener("click", () => {
        useImperial = false;
        document.getElementById("unit-metric").classList.add("tab-active");
        document.getElementById("unit-imperial").classList.remove("tab-active");
        updateUnitLabels();
      });
      updateUnitLabels();

      // Fabric yardage calculation
      document
        .getElementById("btn-calc-fabric")
        .addEventListener("click", () => {
          const fabricWidth = lengthToBase(
            document.getElementById("fabric-width").value
          );
          const pieceCount = parseInt(
            document.getElementById("piece-count").value,
            10
          );
          const pieceWidth = lengthToBase(
            document.getElementById("piece-width").value
          );
          const pieceLength = lengthToBase(
            document.getElementById("piece-length").value
          );
          const seam = lengthToBase(
            document.getElementById("seam-allowance").value
          );
          const extraPercent =
            parseFloat(document.getElementById("extra-percent").value) || 0;
          const layout = document.getElementById("layout-direction").value;

          if (
            !fabricWidth ||
            !pieceCount ||
            !pieceWidth ||
            !pieceLength ||
            seam < 0
          ) {
            alert("Please enter valid positive values.");
            return;
          }

          const cutWidth = pieceWidth + 2 * seam;
          const cutLength = pieceLength + 2 * seam;

          let across, along;
          if (layout === "lengthwise") {
            across = Math.floor(fabricWidth / cutWidth);
            along = cutLength;
          } else {
            across = Math.floor(fabricWidth / cutLength);
            along = cutWidth;
          }

          if (across < 1) {
            alert(
              "Pieces do not fit across the fabric width. Try changing layout or using wider fabric."
            );
            return;
          }

          const rows = Math.ceil(pieceCount / across);
          let totalLength = rows * along;
          totalLength *= 1 + extraPercent / 100;

          const longLen = baseToLongLength(totalLength);
          const altLongLen = formatAltLength(totalLength);

          const resultBox = document.getElementById("fabric-result");
          document.getElementById("fabric-result-main").textContent =
            "You need approximately " + formatLength(longLen) + " of fabric.";
          document.getElementById("fabric-result-alt").textContent =
            "That is about " + altLongLen + " of fabric.";
          document.getElementById("fabric-result-detail").textContent =
            "Cut size per piece: " +
            cutWidth.toFixed(2) +
            " × " +
            cutLength.toFixed(2) +
            (useImperial ? " in." : " cm.") +
            " Pieces per row: " +
            across +
            ", rows needed: " +
            rows +
            ". Includes " +
            extraPercent.toFixed(1) +
            "% extra.";
          resultBox.classList.remove("hidden");
        });

      // Circle skirt calculation
      document
        .getElementById("btn-calc-circle")
        .addEventListener("click", () => {
          const waist = lengthToBase(
            document.getElementById("circle-waist").value
          );
          const length = lengthToBase(
            document.getElementById("circle-length").value
          );
          const hem = lengthToBase(document.getElementById("circle-hem").value);
          const waistSA = lengthToBase(
            document.getElementById("circle-waist-sa").value
          );
          const fabricWidth = lengthToBase(
            document.getElementById("circle-fabric-width").value
          );
          const type = document.getElementById("circle-type").value;

          if (!waist || !length || fabricWidth <= 0) {
            alert("Please enter valid waist, length, and fabric width.");
            return;
          }

          let angleFactor;
          if (type === "full") angleFactor = 1;
          else if (type === "half") angleFactor = 2;
          else angleFactor = 4;

          const waistRadius = waist / angleFactor / (2 * Math.PI);
          const outerRadius = waistRadius + length + hem + waistSA;
          const diameter = 2 * outerRadius;

          let panels;
          if (diameter <= fabricWidth) {
            panels = type === "full" ? 1 : type === "half" ? 1 : 1;
          } else if (diameter <= 2 * fabricWidth) {
            panels = type === "full" ? 2 : type === "half" ? 2 : 2;
          } else {
            panels = type === "full" ? 4 : 4;
          }

          const panelLength = outerRadius + waistRadius;
          let totalLength = panels * panelLength;

          const longLen = baseToLongLength(totalLength);
          const altLongLen = formatAltLength(totalLength);

          const resultBox = document.getElementById("circle-result");
          document.getElementById("circle-result-main").textContent =
            "You need approximately " +
            formatLength(longLen) +
            " of fabric for the " +
            type +
            " circle skirt.";
          document.getElementById("circle-result-layout").textContent =
            "Estimated panels: " +
            panels +
            ". Required diameter: " +
            diameter.toFixed(2) +
            (useImperial ? " in" : " cm") +
            ", fabric width: " +
            fabricWidth.toFixed(2) +
            (useImperial ? " in." : " cm.");
          const elasticLen = waist - (useImperial ? 2 : 5); // simple suggestion
          document.getElementById("circle-result-elastic").textContent =
            "Suggested waistband elastic length: about " +
            elasticLen.toFixed(1) +
            (useImperial ? " in" : " cm") +
            " (adjust for comfort).";
          resultBox.classList.remove("hidden");
        });

      // Binding & bias calculation
      document
        .getElementById("btn-calc-binding")
        .addEventListener("click", () => {
          const edgeLen = lengthToBase(
            document.getElementById("bind-edge-length").value
          );
          const stripWidth = lengthToBase(
            document.getElementById("bind-strip-width").value
          );
          const fabricWidth = lengthToBase(
            document.getElementById("bind-fabric-width").value
          );
          const type = document.getElementById("bind-type").value;

          if (!edgeLen || !stripWidth || !fabricWidth) {
            alert(
              "Please enter valid edge length, strip width, and fabric width."
            );
            return;
          }

          let totalBinding = edgeLen * 1.05; // 5% extra
          if (type === "bias") {
            totalBinding *= 1.1; // extra for diagonal layout and joins
          }

          const strips = Math.ceil(totalBinding / fabricWidth);
          const fabricLength = strips * stripWidth;

          const longLen = baseToLongLength(fabricLength);
          const altLongLen = formatAltLength(fabricLength);

          const resultBox = document.getElementById("binding-result");
          document.getElementById("binding-result-main").textContent =
            "You need about " +
            totalBinding.toFixed(1) +
            (useImperial ? " in" : " cm") +
            " of " +
            (type === "bias" ? "bias" : "straight") +
            " binding.";
          document.getElementById("binding-result-strips").textContent =
            "Cut " +
            strips +
            " strip(s) of width " +
            stripWidth.toFixed(2) +
            (useImperial ? " in" : " cm") +
            " across fabric " +
            fabricWidth.toFixed(2) +
            (useImperial ? " in" : " cm") +
            " wide.";
          document.getElementById("binding-result-fabric").textContent =
            "This requires about " +
            formatLength(longLen) +
            " of fabric (" +
            altLongLen +
            ").";
          resultBox.classList.remove("hidden");
        });

      // Elastic & waistband calculation
      document
        .getElementById("btn-calc-elastic")
        .addEventListener("click", () => {
          const body = lengthToBase(
            document.getElementById("elastic-body").value
          );
          const ease = lengthToBase(
            document.getElementById("elastic-ease").value || 0
          );
          const overlap = lengthToBase(
            document.getElementById("elastic-overlap").value || 0
          );
          const casingHeight = lengthToBase(
            document.getElementById("casing-height").value
          );
          const casingExtra = lengthToBase(
            document.getElementById("casing-extra").value || 0
          );

          if (!body || casingHeight <= 0) {
            alert("Please enter a valid body measurement and casing height.");
            return;
          }

          const elasticLen = body + ease + overlap;
          const casingCutHeight = 2 * casingHeight + casingExtra;

          const resultBox = document.getElementById("elastic-result");
          document.getElementById("elastic-result-main").textContent =
            "Cut elastic to approximately " +
            elasticLen.toFixed(1) +
            (useImperial ? " in" : " cm") +
            " (including overlap).";
          document.getElementById("elastic-result-casing").textContent =
            "Cut waistband casing height: " +
            casingCutHeight.toFixed(1) +
            (useImperial ? " in" : " cm") +
            " (before attaching to the garment).";
          resultBox.classList.remove("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
