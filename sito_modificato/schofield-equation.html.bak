    <script>
      // Schofield calculator logic
      function getSchofieldCoefficients(sex, ageYears) {
        if (ageYears < 3) {
          return null; // out of range for standard Schofield
        }
        if (sex === "male") {
          if (ageYears >= 3 && ageYears < 10)
            return {
              a: 22.7,
              b: 495,
              label: "Male 3–10 years: BMR = 22.7 × W + 495",
            };
          if (ageYears >= 10 && ageYears < 18)
            return {
              a: 17.5,
              b: 651,
              label: "Male 10–18 years: BMR = 17.5 × W + 651",
            };
          if (ageYears >= 18 && ageYears < 30)
            return {
              a: 15.3,
              b: 679,
              label: "Male 18–30 years: BMR = 15.3 × W + 679",
            };
          if (ageYears >= 30 && ageYears <= 60)
            return {
              a: 11.6,
              b: 879,
              label: "Male 30–60 years: BMR = 11.6 × W + 879",
            };
          if (ageYears > 60)
            return {
              a: 13.5,
              b: 487,
              label: "Male > 60 years: BMR = 13.5 × W + 487",
            };
        } else {
          if (ageYears >= 3 && ageYears < 10)
            return {
              a: 22.5,
              b: 499,
              label: "Female 3–10 years: BMR = 22.5 × W + 499",
            };
          if (ageYears >= 10 && ageYears < 18)
            return {
              a: 12.2,
              b: 746,
              label: "Female 10–18 years: BMR = 12.2 × W + 746",
            };
          if (ageYears >= 18 && ageYears < 30)
            return {
              a: 14.7,
              b: 496,
              label: "Female 18–30 years: BMR = 14.7 × W + 496",
            };
          if (ageYears >= 30 && ageYears <= 60)
            return {
              a: 8.7,
              b: 829,
              label: "Female 30–60 years: BMR = 8.7 × W + 829",
            };
          if (ageYears > 60)
            return {
              a: 10.5,
              b: 596,
              label: "Female > 60 years: BMR = 10.5 × W + 596",
            };
        }
        return null;
      }

      function formatNumber(num, decimals) {
        return num.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: decimals,
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        const sexEl = document.getElementById("sex");
        const ageEl = document.getElementById("age");
        const weightEl = document.getElementById("weight");
        const weightUnitEl = document.getElementById("weight-unit");
        const activityEl = document.getElementById("activity");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        const resultsContainer = document.getElementById("results-container");
        const bmrKcalEl = document.getElementById("bmr-kcal");
        const bmrKjEl = document.getElementById("bmr-kj");
        const tdeeKcalEl = document.getElementById("tdee-kcal");
        const tdeeKjEl = document.getElementById("tdee-kj");
        const activityNoteEl = document.getElementById("activity-note");
        const errorEl = document.getElementById("error-message");
        const equationBadgeEl = document.getElementById("equation-used-badge");

        calcBtn.addEventListener("click", function () {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          const sex = sexEl.value;
          const age = parseFloat(ageEl.value);
          const weightInput = parseFloat(weightEl.value);
          const weightUnit = weightUnitEl.value;
          const activityFactor = parseFloat(activityEl.value);

          if (isNaN(age) || age <= 0) {
            errorEl.textContent =
              "Please enter a valid age in years (greater than 0).";
            errorEl.classList.remove("hidden");
            resultsContainer.classList.add("hidden");
            equationBadgeEl.classList.add("hidden");
            return;
          }
          if (isNaN(weightInput) || weightInput <= 0) {
            errorEl.textContent = "Please enter a valid body weight.";
            errorEl.classList.remove("hidden");
            resultsContainer.classList.add("hidden");
            equationBadgeEl.classList.add("hidden");
            return;
          }

          let weightKg = weightInput;
          if (weightUnit === "lb") {
            weightKg = weightInput * 0.45359237;
          }

          const coeffs = getSchofieldCoefficients(sex, age);
          if (!coeffs) {
            errorEl.textContent =
              "The standard Schofield equations are defined for ages 3 years and older. For infants, use pediatric-specific equations.";
            errorEl.classList.remove("hidden");
            resultsContainer.classList.add("hidden");
            equationBadgeEl.classList.add("hidden");
            return;
          }

          const bmrKcal = coeffs.a * weightKg + coeffs.b;
          const bmrKj = bmrKcal * 4.184;
          const tdeeKcal = bmrKcal * activityFactor;
          const tdeeKj = tdeeKcal * 4.184;

          bmrKcalEl.textContent = formatNumber(bmrKcal, 0) + " kcal/day";
          bmrKjEl.textContent = formatNumber(bmrKj, 0) + " kJ/day";
          tdeeKcalEl.textContent = formatNumber(tdeeKcal, 0) + " kcal/day";
          tdeeKjEl.textContent = formatNumber(tdeeKj, 0) + " kJ/day";

          if (activityFactor === 1.0) {
            activityNoteEl.textContent =
              "No activity factor applied – daily energy needs equal BMR.";
          } else {
            activityNoteEl.textContent =
              "Includes an activity factor of ×" +
              activityFactor.toFixed(1) +
              " applied to BMR.";
          }

          equationBadgeEl.textContent = coeffs.label;
          equationBadgeEl.classList.remove("hidden");
          resultsContainer.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", function () {
          sexEl.value = "male";
          ageEl.value = "";
          weightEl.value = "";
          weightUnitEl.value = "kg";
          activityEl.value = "1.0";
          resultsContainer.classList.add("hidden");
          equationBadgeEl.classList.add("hidden");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
        });

        // Simple FAQ toggle (in addition to global script_faq if present)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach(function (btn) {
            btn.addEventListener("click", function () {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const icon = btn.querySelector("span:last-child");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((i) => (i.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                icon.textContent = "−";
              } else {
                answer.classList.add("hidden");
                icon.textContent = "+";
              }
            });
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
