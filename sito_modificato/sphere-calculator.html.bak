    <script>
      const knownEl = document.getElementById('known');
      const valueEl = document.getElementById('value');
      const unitEl = document.getElementById('unit');
      const densityEl = document.getElementById('density');

      const resRadius = document.getElementById('res-radius');
      const resRadiusAlt = document.getElementById('res-radius-alt');
      const resDiameter = document.getElementById('res-diameter');
      const resDiameterAlt = document.getElementById('res-diameter-alt');
      const resVolume = document.getElementById('res-volume');
      const resVolumeAlt = document.getElementById('res-volume-alt');
      const resArea = document.getElementById('res-area');
      const resAreaAlt = document.getElementById('res-area-alt');
      const resMass = document.getElementById('res-mass');
      const resMassNote = document.getElementById('res-mass-note');

      function toMeters(v, unit) {
        const val = parseFloat(v);
        if (isNaN(val) || val < 0) return NaN;
        switch (unit) {
          case 'mm': return val / 1000;
          case 'cm': return val / 100;
          case 'm': return val;
          case 'in': return val * 0.0254;
          default: return val;
        }
      }

      function calculateSphere() {
        const known = knownEl.value;
        const rawVal = parseFloat(valueEl.value);
        const unit = unitEl.value;
        const density = parseFloat(densityEl.value);

        let radius_m = NaN;

        if (known === 'radius') {
          radius_m = toMeters(rawVal, unit);
        } else if (known === 'diameter') {
          const d_m = toMeters(rawVal, unit);
          radius_m = d_m / 2;
        } else if (known === 'circumference') {
          const c_m = toMeters(rawVal, unit);
          radius_m = c_m / (2 * Math.PI);
        } else if (known === 'surface') {
          // surface area is area, so value is in unit^2
          // treat unit as length unit, so convert to m, then square?
          const val = rawVal;
          if (isNaN(val) || val <= 0) {
            radius_m = NaN;
          } else {
            // if unit is m, fine; if cm, area was entered in cm^2 => convert to m^2
            let area_m2 = val;
            if (unit === 'cm') area_m2 = val / 10000;
            else if (unit === 'mm') area_m2 = val / 1_000_000;
            else if (unit === 'in') area_m2 = val * 0.00064516;
            radius_m = Math.sqrt(area_m2 / (4 * Math.PI));
          }
        } else if (known === 'volume') {
          // volume in unit^3
          const val = rawVal;
          if (isNaN(val) || val <= 0) {
            radius_m = NaN;
          } else {
            let vol_m3 = val;
            if (unit === 'cm') vol_m3 = val / 1_000_000;
            else if (unit === 'mm') vol_m3 = val / 1_000_000_000;
            else if (unit === 'in') vol_m3 = val * 0.000016387064;
            radius_m = Math.cbrt((3 * vol_m3) / (4 * Math.PI));
          }
        }

        if (isNaN(radius_m) || radius_m <= 0) {
          resRadius.textContent = '—';
          resRadiusAlt.textContent = '—';
          resDiameter.textContent = '—';
          resDiameterAlt.textContent = '—';
          resVolume.textContent = '—';
          resVolumeAlt.textContent = '—';
          resArea.textContent = '—';
          resAreaAlt.textContent = '—';
          resMass.textContent = '—';
          return;
        }

        const diameter_m = 2 * radius_m;
        const volume_m3 = (4/3) * Math.PI * Math.pow(radius_m, 3);
        const area_m2 = 4 * Math.PI * Math.pow(radius_m, 2);

        resRadius.textContent = radius_m.toFixed(4);
        resRadiusAlt.textContent = (radius_m * 100).toFixed(2) + ' cm';
        resDiameter.textContent = diameter_m.toFixed(4);
        resDiameterAlt.textContent = (diameter_m * 39.3700787402).toFixed(2) + ' in';
        resVolume.textContent = volume_m3.toFixed(6);
        resVolumeAlt.textContent = (volume_m3 * 1000).toFixed(2) + ' L';
        resArea.textContent = area_m2.toFixed(4);
        resAreaAlt.textContent = (area_m2 * 10.7639104167).toFixed(2) + ' ft²';

        if (!isNaN(density) && density > 0) {
          const mass = density * volume_m3;
          resMass.textContent = mass.toFixed(3);
          resMassNote.textContent = 'kg (with density ' + density + ' kg/m³)';
        } else {
          resMass.textContent = '—';
          resMassNote.textContent = 'enter density for mass';
        }
      }

      document.getElementById('calc-btn').addEventListener('click', calculateSphere);
      // initial
      calculateSphere();
    </script>

