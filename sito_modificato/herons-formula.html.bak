    <script>
      (function () {
        const aInput = document.getElementById("side-a");
        const bInput = document.getElementById("side-b");
        const cInput = document.getElementById("side-c");
        const unitSelect = document.getElementById("unit-select");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorEl = document.getElementById("error-message");

        const sEl = document.getElementById("result-s");
        const areaEl = document.getElementById("result-area");
        const typeEl = document.getElementById("result-type");
        const stepsContainer = document.getElementById("steps-container");
        const stepsList = document.getElementById("steps-list");

        function clearErrors() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
          [aInput, bInput, cInput].forEach((el) =>
            el.classList.remove("input-error")
          );
        }

        function resetResults() {
          sEl.textContent = "–";
          areaEl.textContent = "–";
          typeEl.textContent = "–";
          stepsContainer.classList.add("hidden");
          stepsList.innerHTML = "";
        }

        function triangleType(a, b, c) {
          const eps = 1e-9;
          if (Math.abs(a - b) < eps && Math.abs(b - c) < eps)
            return "Equilateral";
          if (
            Math.abs(a - b) < eps ||
            Math.abs(a - c) < eps ||
            Math.abs(b - c) < eps
          )
            return "Isosceles";
          return "Scalene";
        }

        function formatNumber(x, decimals = 4) {
          if (!isFinite(x)) return "–";
          if (Math.abs(x) >= 1e6 || (Math.abs(x) > 0 && Math.abs(x) < 1e-3)) {
            return x.toExponential(3);
          }
          return x
            .toFixed(decimals)
            .replace(/\.0+$/, "")
            .replace(/(\.\d*?[1-9])0+$/, "$1");
        }

        calcBtn.addEventListener("click", function () {
          clearErrors();
          resetResults();

          const a = parseFloat(aInput.value);
          const b = parseFloat(bInput.value);
          const c = parseFloat(cInput.value);

          let hasError = false;
          if (!(a > 0)) {
            aInput.classList.add("input-error");
            hasError = true;
          }
          if (!(b > 0)) {
            bInput.classList.add("input-error");
            hasError = true;
          }
          if (!(c > 0)) {
            cInput.classList.add("input-error");
            hasError = true;
          }

          if (hasError) {
            errorEl.textContent =
              "Please enter a positive length for all three sides.";
            errorEl.classList.remove("hidden");
            return;
          }

          // Triangle inequality
          if (a + b <= c || a + c <= b || b + c <= a) {
            errorEl.textContent =
              "These side lengths do not satisfy the triangle inequality and cannot form a valid triangle.";
            errorEl.classList.remove("hidden");
            [aInput, bInput, cInput].forEach((el) =>
              el.classList.add("input-error")
            );
            return;
          }

          const s = (a + b + c) / 2;
          const expr = s * (s - a) * (s - b) * (s - c);

          if (expr < 0) {
            errorEl.textContent =
              "Numerical error: expression under the square root became negative. Please check your inputs.";
            errorEl.classList.remove("hidden");
            return;
          }

          const area = Math.sqrt(expr);
          const unit = unitSelect.value;
          const unitStr = unit ? unit + "²" : "units²";
          const unitLenStr = unit || "units";

          sEl.textContent = formatNumber(s, 4) + " " + unitLenStr;
          areaEl.textContent = formatNumber(area, 4) + " " + unitStr;
          typeEl.textContent = triangleType(a, b, c);

          // Steps
          stepsList.innerHTML = "";
          const step1 = document.createElement("li");
          step1.textContent = `Compute semi-perimeter: s = (a + b + c) / 2 = (${a} + ${b} + ${c}) / 2 = ${formatNumber(
            s,
            4
          )} ${unitLenStr}`;
          const step2 = document.createElement("li");
          step2.textContent = `Compute expression under the square root: s(s - a)(s - b)(s - c) = ${formatNumber(
            s,
            4
          )} × (${formatNumber(s - a, 4)}) × (${formatNumber(
            s - b,
            4
          )}) × (${formatNumber(s - c, 4)}) = ${formatNumber(expr, 4)}`;
          const step3 = document.createElement("li");
          step3.textContent = `Area: A = √[s(s - a)(s - b)(s - c)] = √(${formatNumber(
            expr,
            4
          )}) = ${formatNumber(area, 4)} ${unitStr}`;

          [step1, step2, step3].forEach((li) => stepsList.appendChild(li));
          stepsContainer.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", function () {
          [aInput, bInput, cInput].forEach((el) => (el.value = ""));
          unitSelect.value = "cm";
          clearErrors();
          resetResults();
        });
      })();
    </script>

