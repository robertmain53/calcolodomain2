    <script>
      // Helper: format currency AUD
      function formatAUD(value) {
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          "A$" +
          abs.toLocaleString("en-AU", { maximumFractionDigits: 0 })
        );
      }

      function formatAUDWithCents(value) {
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          "A$" +
          abs.toLocaleString("en-AU", {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
          })
        );
      }

      function formatPercent(value) {
        return (value * 100).toFixed(2) + "% p.a.";
      }

      function getTaxRate() {
        const select = document.getElementById("taxRate");
        const customInput = document.getElementById("customTaxRate");
        const val = select.value;
        if (val === "custom") {
          const custom = parseFloat(customInput.value);
          return isNaN(custom) ? 0 : custom / 100;
        }
        return parseFloat(val) / 100;
      }

      function updateTaxRateUI() {
        const select = document.getElementById("taxRate");
        const customInput = document.getElementById("customTaxRate");
        if (select.value === "custom") {
          customInput.classList.remove("hidden");
          if (!customInput.value) customInput.value = "34.5";
        } else {
          customInput.classList.add("hidden");
        }
      }

      function calculateNegativeGearing() {
        const purchasePrice =
          parseFloat(document.getElementById("purchasePrice").value) || 0;
        const depositPercent = Math.min(
          Math.max(
            parseFloat(document.getElementById("depositPercent").value) || 0,
            0
          ),
          100
        );
        const interestRate =
          (parseFloat(document.getElementById("interestRate").value) || 0) /
          100;
        const weeklyRent =
          parseFloat(document.getElementById("weeklyRent").value) || 0;

        const rates = parseFloat(document.getElementById("rates").value) || 0;
        const insurance =
          parseFloat(document.getElementById("insurance").value) || 0;
        const maintenance =
          parseFloat(document.getElementById("maintenance").value) || 0;
        const strata = parseFloat(document.getElementById("strata").value) || 0;
        const management =
          parseFloat(document.getElementById("management").value) || 0;
        const otherExpenses =
          parseFloat(document.getElementById("otherExpenses").value) || 0;
        const depreciation =
          parseFloat(document.getElementById("depreciation").value) || 0;

        const loanType = document.querySelector(
          'input[name="loanType"]:checked'
        ).value;
        const taxRate = getTaxRate();

        const loanAmount = purchasePrice * (1 - depositPercent / 100);
        const annualRent = weeklyRent * 52;

        let annualInterest = loanAmount * interestRate;
        let annualPrincipal = 0;

        if (loanType === "pi" && interestRate > 0) {
          const years = 30;
          const n = years * 12;
          const r = interestRate / 12;
          const monthlyRepayment =
            (loanAmount * (r * Math.pow(1 + r, n))) / (Math.pow(1 + r, n) - 1);
          const annualRepayment = monthlyRepayment * 12;
          annualInterest = loanAmount * interestRate; // approximate first-year interest
          annualPrincipal = Math.max(annualRepayment - annualInterest, 0);
        }

        const otherCashCosts =
          rates + insurance + maintenance + strata + management + otherExpenses;
        const totalCashExpenses = annualInterest + otherCashCosts;
        const preTaxCashFlow = annualRent - totalCashExpenses;

        const taxableIncome = annualRent - (totalCashExpenses + depreciation);

        let taxImpact = 0;
        let taxImpactLabel = "";
        if (taxableIncome < 0) {
          taxImpact = Math.abs(taxableIncome) * taxRate;
          taxImpactLabel = formatAUDWithCents(taxImpact) + " refund";
        } else if (taxableIncome > 0) {
          taxImpact = taxableIncome * taxRate;
          taxImpactLabel = formatAUDWithCents(taxImpact) + " extra tax";
        } else {
          taxImpactLabel = "A$0";
        }

        const afterTaxCashFlow =
          taxableIncome < 0
            ? preTaxCashFlow + taxImpact
            : preTaxCashFlow - taxImpact;

        const preTaxYield =
          purchasePrice > 0 ? preTaxCashFlow / purchasePrice : 0;
        const afterTaxYield =
          purchasePrice > 0 ? afterTaxCashFlow / purchasePrice : 0;

        // Update UI
        document.getElementById("resLoanAmount").textContent =
          formatAUDWithCents(loanAmount);
        document.getElementById("resRent").textContent =
          formatAUDWithCents(annualRent);
        document.getElementById("resInterest").textContent =
          formatAUDWithCents(annualInterest);
        document.getElementById("resPrincipal").textContent =
          formatAUDWithCents(annualPrincipal);

        document.getElementById("resCashExpenses").textContent =
          formatAUDWithCents(totalCashExpenses);
        const preTaxEl = document.getElementById("resPreTaxCash");
        preTaxEl.textContent = formatAUDWithCents(preTaxCashFlow);
        preTaxEl.classList.toggle("text-red-600", preTaxCashFlow < 0);
        preTaxEl.classList.toggle("text-green-700", preTaxCashFlow >= 0);

        document.getElementById("resDep").textContent =
          formatAUDWithCents(depreciation);
        const taxableEl = document.getElementById("resTaxable");
        taxableEl.textContent = formatAUDWithCents(taxableIncome);
        taxableEl.classList.toggle("text-red-600", taxableIncome < 0);
        taxableEl.classList.toggle("text-green-700", taxableIncome > 0);
        taxableEl.classList.toggle("text-gray-800", taxableIncome === 0);

        const taxImpactEl = document.getElementById("resTaxImpact");
        taxImpactEl.textContent = taxImpactLabel;
        taxImpactEl.classList.toggle("text-green-700", taxableIncome < 0);
        taxImpactEl.classList.toggle("text-red-700", taxableIncome > 0);
        taxImpactEl.classList.toggle("text-gray-800", taxableIncome === 0);

        const afterTaxEl = document.getElementById("resAfterTaxCash");
        afterTaxEl.textContent =
          formatAUDWithCents(afterTaxCashFlow) + " / year";
        afterTaxEl.classList.toggle("text-red-700", afterTaxCashFlow < 0);
        afterTaxEl.classList.toggle("text-green-700", afterTaxCashFlow >= 0);

        document.getElementById("resPreTaxYield").textContent =
          formatPercent(preTaxYield);
        document.getElementById("resAfterTaxYield").textContent =
          formatPercent(afterTaxYield);
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("taxRate")
          .addEventListener("change", function () {
            updateTaxRateUI();
            calculateNegativeGearing();
          });
        document
          .getElementById("customTaxRate")
          .addEventListener("input", calculateNegativeGearing);
        document
          .getElementById("calculateBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculateNegativeGearing();
          });

        // Recalculate on key inputs blur for responsiveness
        [
          "purchasePrice",
          "depositPercent",
          "interestRate",
          "weeklyRent",
          "rates",
          "insurance",
          "maintenance",
          "strata",
          "management",
          "otherExpenses",
          "depreciation",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("blur", calculateNegativeGearing);
        });

        document.querySelectorAll('input[name="loanType"]').forEach((r) => {
          r.addEventListener("change", calculateNegativeGearing);
        });

        updateTaxRateUI();
        calculateNegativeGearing();
      });
    </script>

