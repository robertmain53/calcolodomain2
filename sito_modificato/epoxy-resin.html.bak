    <script>
      // Unit conversion constants
      const IN_TO_CM = 2.54;
      const CM3_TO_ML = 1; // 1 cm³ = 1 mL
      const ML_PER_L = 1000;
      const ML_PER_FL_OZ = 29.5735;
      const ML_PER_GAL = 3785.41;
      const SQIN_PER_SQFT = 144;
      const THICK_1_8_IN = 0.125;

      const projectTabs = document.querySelectorAll(".project-tab");
      const projectFields = document.querySelectorAll(".project-fields");
      const unitsTabs = document.querySelectorAll(".units-tab");

      let currentProject = "rectangle";
      let currentUnits = "imperial";

      function setProject(project) {
        currentProject = project;
        projectTabs.forEach((btn) => {
          if (btn.dataset.project === project) {
            btn.classList.add("bg-blue-600", "text-white");
            btn.classList.remove("text-gray-700", "hover:bg-gray-50");
          } else {
            btn.classList.remove("bg-blue-600", "text-white");
            btn.classList.add("text-gray-700", "hover:bg-gray-50");
          }
        });
        projectFields.forEach((block) => {
          block.classList.add("hidden");
        });
        document.getElementById(project + "-fields").classList.remove("hidden");
      }

      function setUnits(units) {
        currentUnits = units;
        unitsTabs.forEach((btn) => {
          if (btn.dataset.units === units) {
            btn.classList.add("bg-blue-600", "text-white");
            btn.classList.remove("text-gray-700", "hover:bg-gray-50");
          } else {
            btn.classList.remove("bg-blue-600", "text-white");
            btn.classList.add("text-gray-700", "hover:bg-gray-50");
          }
        });

        if (units === "imperial") {
          document.getElementById("rect-length-unit").textContent = "in";
          document.getElementById("rect-width-unit").textContent = "in";
          document.getElementById("rect-thickness-unit").textContent = "in";
          document.getElementById("river-length-unit").textContent = "in";
          document.getElementById("river-width-unit").textContent = "in";
          document.getElementById("river-thickness-unit").textContent = "in";
          document.getElementById("max-layer-unit").textContent = "in";
        } else {
          document.getElementById("rect-length-unit").textContent = "cm";
          document.getElementById("rect-width-unit").textContent = "cm";
          document.getElementById("rect-thickness-unit").textContent = "mm";
          document.getElementById("river-length-unit").textContent = "cm";
          document.getElementById("river-width-unit").textContent = "cm";
          document.getElementById("river-thickness-unit").textContent = "mm";
          document.getElementById("max-layer-unit").textContent = "mm";
        }
      }

      projectTabs.forEach((btn) => {
        btn.addEventListener("click", () => {
          setProject(btn.dataset.project);
        });
      });

      unitsTabs.forEach((btn) => {
        btn.addEventListener("click", () => {
          setUnits(btn.dataset.units);
        });
      });

      // Waste margin label
      const wasteSlider = document.getElementById("waste-margin");
      const wasteLabel = document.getElementById("waste-label");
      wasteSlider.addEventListener("input", () => {
        wasteLabel.textContent = wasteSlider.value + "%";
      });

      // Reset button
      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("rect-length").value = 48;
        document.getElementById("rect-width").value = 24;
        document.getElementById("rect-thickness").value = 0.125;
        document.getElementById("river-length").value = 72;
        document.getElementById("river-width").value = 8;
        document.getElementById("river-thickness").value = 2;
        document.getElementById("custom-volume").value = 1000;
        document.getElementById("custom-volume-unit").value = "ml";
        document.getElementById("resin-part").value = 2;
        document.getElementById("hardener-part").value = 1;
        wasteSlider.value = 10;
        wasteLabel.textContent = "10%";
        document.getElementById("max-layer").value = 1;
        setProject("rectangle");
        setUnits("imperial");
        clearResults();
        document.getElementById("error-msg").classList.add("hidden");
        document.getElementById("layer-note").classList.add("hidden");
      });

      function clearResults() {
        const ids = [
          "total-ml",
          "total-l",
          "total-fl-oz",
          "total-gal",
          "coverage-sqft",
          "resin-ml",
          "hardener-ml",
          "resin-fl-oz",
          "hardener-fl-oz",
          "layer-count",
        ];
        ids.forEach((id) => {
          document.getElementById(id).textContent = "–";
        });
      }

      function formatNumber(val, decimals) {
        if (!isFinite(val)) return "–";
        return val.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
        });
      }

      function calculateEpoxy() {
        document.getElementById("error-msg").classList.add("hidden");
        document.getElementById("layer-note").classList.add("hidden");

        let volumeMlIdeal = 0;
        let totalThicknessImperialIn = 0;

        if (currentProject === "rectangle") {
          const L = parseFloat(document.getElementById("rect-length").value);
          const W = parseFloat(document.getElementById("rect-width").value);
          const T = parseFloat(document.getElementById("rect-thickness").value);
          if (L <= 0 || W <= 0 || T <= 0 || isNaN(L) || isNaN(W) || isNaN(T)) {
            document.getElementById("error-msg").classList.remove("hidden");
            clearResults();
            return;
          }
          if (currentUnits === "imperial") {
            const Lcm = L * IN_TO_CM;
            const Wcm = W * IN_TO_CM;
            const Tcm = T * IN_TO_CM;
            volumeMlIdeal = Lcm * Wcm * Tcm * CM3_TO_ML;
            totalThicknessImperialIn = T;
          } else {
            const Lcm = L;
            const Wcm = W;
            const Tcm = T / 10; // mm to cm
            volumeMlIdeal = Lcm * Wcm * Tcm * CM3_TO_ML;
            totalThicknessImperialIn = T / 25.4; // mm to in
          }
        } else if (currentProject === "river") {
          const L = parseFloat(document.getElementById("river-length").value);
          const W = parseFloat(document.getElementById("river-width").value);
          const T = parseFloat(
            document.getElementById("river-thickness").value
          );
          if (L <= 0 || W <= 0 || T <= 0 || isNaN(L) || isNaN(W) || isNaN(T)) {
            document.getElementById("error-msg").classList.remove("hidden");
            clearResults();
            return;
          }
          if (currentUnits === "imperial") {
            const Lcm = L * IN_TO_CM;
            const Wcm = W * IN_TO_CM;
            const Tcm = T * IN_TO_CM;
            volumeMlIdeal = Lcm * Wcm * Tcm * CM3_TO_ML;
            totalThicknessImperialIn = T;
          } else {
            const Lcm = L;
            const Wcm = W;
            const Tcm = T / 10;
            volumeMlIdeal = Lcm * Wcm * Tcm * CM3_TO_ML;
            totalThicknessImperialIn = T / 25.4;
          }
        } else if (currentProject === "custom") {
          const V = parseFloat(document.getElementById("custom-volume").value);
          const unit = document.getElementById("custom-volume-unit").value;
          if (V <= 0 || isNaN(V)) {
            document.getElementById("error-msg").classList.remove("hidden");
            clearResults();
            return;
          }
          if (unit === "ml") {
            volumeMlIdeal = V;
          } else if (unit === "l") {
            volumeMlIdeal = V * ML_PER_L;
          } else if (unit === "fl_oz") {
            volumeMlIdeal = V * ML_PER_FL_OZ;
          } else if (unit === "gal") {
            volumeMlIdeal = V * ML_PER_GAL;
          }
          totalThicknessImperialIn = 0; // unknown
        }

        const resinPart = parseFloat(
          document.getElementById("resin-part").value
        );
        const hardenerPart = parseFloat(
          document.getElementById("hardener-part").value
        );
        if (
          resinPart <= 0 ||
          hardenerPart <= 0 ||
          isNaN(resinPart) ||
          isNaN(hardenerPart)
        ) {
          document.getElementById("error-msg").classList.remove("hidden");
          clearResults();
          return;
        }

        const wastePercent = parseFloat(wasteSlider.value) || 0;
        const wasteFactor = 1 + wastePercent / 100;

        const volumeMlTotal = volumeMlIdeal * wasteFactor;
        const totalL = volumeMlTotal / ML_PER_L;
        const totalFlOz = volumeMlTotal / ML_PER_FL_OZ;
        const totalGal = volumeMlTotal / ML_PER_GAL;

        const totalParts = resinPart + hardenerPart;
        const resinMl = volumeMlTotal * (resinPart / totalParts);
        const hardenerMl = volumeMlTotal * (hardenerPart / totalParts);
        const resinFlOz = resinMl / ML_PER_FL_OZ;
        const hardenerFlOz = hardenerMl / ML_PER_FL_OZ;

        // Coverage at 1/8" (approx, in square feet)
        let coverageSqft = "–";
        if (currentProject !== "custom") {
          // For non-custom, we can estimate coverage by converting volume back to area at 1/8"
          const thicknessIn = THICK_1_8_IN;
          const thicknessCm = thicknessIn * IN_TO_CM;
          const areaCm2 = volumeMlTotal / thicknessCm; // since 1 mL = 1 cm³
          const areaIn2 = areaCm2 / (IN_TO_CM * IN_TO_CM);
          const areaFt2 = areaIn2 / SQIN_PER_SQFT;
          coverageSqft = formatNumber(areaFt2, 1) + ' sq ft @ 1/8"';
        }

        // Layer suggestion
        let layerCountText = "–";
        const maxLayerVal = parseFloat(
          document.getElementById("max-layer").value
        );
        if (
          totalThicknessImperialIn > 0 &&
          maxLayerVal > 0 &&
          isFinite(maxLayerVal)
        ) {
          const layers = Math.ceil(totalThicknessImperialIn / maxLayerVal);
          layerCountText = layers.toString();
          const noteEl = document.getElementById("layer-note");
          noteEl.textContent =
            "Based on a total pour thickness of approximately " +
            formatNumber(totalThicknessImperialIn, 2) +
            " in and a maximum layer depth of " +
            formatNumber(maxLayerVal, 2) +
            " in, plan for about " +
            layers +
            " pour" +
            (layers > 1
              ? "s."
              : ". Always confirm with your epoxy manufacturer.");
          noteEl.classList.remove("hidden");
        }

        // Update DOM
        document.getElementById("total-ml").textContent =
          formatNumber(volumeMlTotal, 0) + " mL";
        document.getElementById("total-l").textContent =
          formatNumber(totalL, 2) + " L";
        document.getElementById("total-fl-oz").textContent =
          formatNumber(totalFlOz, 1) + " fl oz";
        document.getElementById("total-gal").textContent =
          formatNumber(totalGal, 3) + " gal";
        document.getElementById("coverage-sqft").textContent = coverageSqft;

        document.getElementById("resin-ml").textContent =
          formatNumber(resinMl, 0) + " mL";
        document.getElementById("hardener-ml").textContent =
          formatNumber(hardenerMl, 0) + " mL";
        document.getElementById("resin-fl-oz").textContent =
          formatNumber(resinFlOz, 1) + " fl oz";
        document.getElementById("hardener-fl-oz").textContent =
          formatNumber(hardenerFlOz, 1) + " fl oz";
        document.getElementById("layer-count").textContent = layerCountText;
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateEpoxy);

      // Initialize defaults
      setProject("rectangle");
      setUnits("imperial");
    </script>

