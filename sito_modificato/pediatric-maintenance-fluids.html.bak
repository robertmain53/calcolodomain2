    <script>
      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function calcMaintenanceRate(weightKg) {
        if (weightKg <= 0 || isNaN(weightKg)) return 0;
        let rate;
        if (weightKg <= 10) {
          rate = 4 * weightKg;
        } else if (weightKg <= 20) {
          rate = 40 + 2 * (weightKg - 10);
        } else {
          rate = 60 + 1 * (weightKg - 20);
        }
        return rate; // mL/hr
      }

      function updateCustomFieldsVisibility() {
        const dehydrationSel = document.getElementById("dehydration");
        const customDehydration = document.getElementById("customDehydration");
        customDehydration.classList.toggle(
          "hidden",
          dehydrationSel.value !== "custom"
        );

        const maintenanceSel = document.getElementById("maintenanceFactor");
        const customMaintenance = document.getElementById(
          "customMaintenanceFactor"
        );
        customMaintenance.classList.toggle(
          "hidden",
          maintenanceSel.value !== "custom"
        );
      }

      document
        .getElementById("dehydration")
        .addEventListener("change", updateCustomFieldsVisibility);
      document
        .getElementById("maintenanceFactor")
        .addEventListener("change", updateCustomFieldsVisibility);

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const weightInput = parseFloat(
            document.getElementById("weight").value
          );
          const weightUnit = document.getElementById("weightUnit").value;
          const dehydrationSel = document.getElementById("dehydration").value;
          const customDehydrationVal = parseFloat(
            document.getElementById("customDehydration").value
          );
          const deficitHours = parseFloat(
            document.getElementById("deficitHours").value
          );
          const maintenanceSel =
            document.getElementById("maintenanceFactor").value;
          const customMaintenanceVal = parseFloat(
            document.getElementById("customMaintenanceFactor").value
          );
          const fluidType = document.getElementById("fluidType").value;

          const resultsSummary = document.getElementById("resultsSummary");
          const resultsContent = document.getElementById("resultsContent");
          const maintenanceHourlyEl =
            document.getElementById("maintenanceHourly");
          const maintenanceDailyEl =
            document.getElementById("maintenanceDaily");
          const deficitVolumeEl = document.getElementById("deficitVolume");
          const deficitHourlyEl = document.getElementById("deficitHourly");
          const totalHourlyEl = document.getElementById("totalHourly");
          const totalDailyEl = document.getElementById("totalDaily");
          const electrolyteNoteEl = document.getElementById("electrolyteNote");
          const maintenanceFactorLabel = document.getElementById(
            "maintenanceFactorLabel"
          );

          if (isNaN(weightInput) || weightInput <= 0) {
            resultsSummary.textContent = "Please enter a valid weight.";
            resultsContent.classList.add("hidden");
            return;
          }

          // Convert weight to kg if needed
          let weightKg =
            weightUnit === "lb" ? weightInput * 0.45359237 : weightInput;
          weightKg = roundTo(weightKg, 2);

          // Maintenance rate (Holliday–Segar)
          const baseMaintRate = calcMaintenanceRate(weightKg); // mL/hr

          // Maintenance factor
          let factorPercent;
          if (maintenanceSel === "custom") {
            if (isNaN(customMaintenanceVal) || customMaintenanceVal <= 0) {
              resultsSummary.textContent =
                "Please enter a valid custom maintenance percentage.";
              resultsContent.classList.add("hidden");
              return;
            }
            factorPercent = customMaintenanceVal;
          } else {
            factorPercent = parseFloat(maintenanceSel) * 100;
          }
          const factor = factorPercent / 100;
          const adjustedMaintRate = baseMaintRate * factor;
          const adjustedMaintDaily = adjustedMaintRate * 24;

          // Dehydration percentage
          let dehydrationPercent;
          if (dehydrationSel === "custom") {
            if (isNaN(customDehydrationVal) || customDehydrationVal < 0) {
              resultsSummary.textContent =
                "Please enter a valid custom dehydration percentage.";
              resultsContent.classList.add("hidden");
              return;
            }
            dehydrationPercent = customDehydrationVal;
          } else {
            dehydrationPercent = parseFloat(dehydrationSel);
          }

          // Deficit volume
          let deficitVolume = 0;
          let deficitRate = 0;
          if (dehydrationPercent > 0 && deficitHours > 0) {
            deficitVolume = weightKg * dehydrationPercent * 10; // mL
            deficitRate = deficitVolume / deficitHours; // mL/hr
          }

          const totalRate = adjustedMaintRate + deficitRate;
          const totalDaily = adjustedMaintDaily + deficitVolume;

          // Update UI
          maintenanceFactorLabel.textContent = factorPercent.toFixed(0) + "%";
          maintenanceHourlyEl.textContent = `${roundTo(
            adjustedMaintRate,
            1
          )} mL/hr (adjusted maintenance)`;
          maintenanceDailyEl.textContent = `${roundTo(
            adjustedMaintDaily,
            0
          )} mL/24 h`;

          if (dehydrationPercent > 0 && deficitHours > 0) {
            deficitVolumeEl.textContent = `${roundTo(
              deficitVolume,
              0
            )} mL (${dehydrationPercent}% ≈ ${roundTo(
              deficitVolume / weightKg,
              0
            )} mL/kg total)`;
            deficitHourlyEl.textContent = `≈ ${roundTo(
              deficitRate,
              1
            )} mL/hr over ${deficitHours} h`;
          } else if (dehydrationPercent > 0 && deficitHours === 0) {
            deficitVolumeEl.textContent = `${roundTo(
              deficitVolume,
              0
            )} mL (deficit not scheduled for replacement in this plan)`;
            deficitHourlyEl.textContent = "";
          } else {
            deficitVolumeEl.textContent = "No dehydration deficit included.";
            deficitHourlyEl.textContent = "";
          }

          totalHourlyEl.textContent = `${roundTo(
            totalRate,
            1
          )} mL/hr (maintenance + deficit)`;
          totalDailyEl.textContent = `${roundTo(
            totalDaily,
            0
          )} mL/24 h total planned volume`;

          let note =
            "Suggested fluid (if no contraindication): isotonic solution with dextrose, e.g. 0.9% NaCl + 5% dextrose + 20 mmol/L KCl, with close monitoring of sodium and fluid balance.";
          if (fluidType === "hypo") {
            note =
              "Hypotonic maintenance fluids (e.g. 0.45% NaCl) are generally avoided for routine use due to hyponatremia risk. Use only if specifically indicated and monitor sodium closely.";
          } else if (fluidType === "custom") {
            note =
              "Follow your institution’s IV fluid guideline for exact composition (sodium, chloride, potassium, dextrose) and adjust based on labs and clinical status.";
          }
          electrolyteNoteEl.textContent = note;

          resultsSummary.textContent = `Calculated using weight ${weightKg.toFixed(
            2
          )} kg and the Holliday–Segar method.`;
          resultsContent.classList.remove("hidden");
        });

      // Initialize visibility on load
      updateCustomFieldsVisibility();
    </script>

