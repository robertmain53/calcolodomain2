    <script>
      // Bar data (diameter in mm)
      const usBars = {
        "#3": 9.525,
        "#4": 12.7,
        "#5": 15.875,
        "#6": 19.05,
        "#7": 22.225,
        "#8": 25.4,
        "#9": 28.65,
        "#10": 32.26,
        "#11": 35.81,
      };
      const metricBars = {
        6: 6,
        8: 8,
        10: 10,
        12: 12,
        16: 16,
        20: 20,
        25: 25,
        32: 32,
      };

      let currentUnit = "imperial"; // or 'metric'

      function mmToIn(mm) {
        return mm / 25.4;
      }
      function inToMm(i) {
        return i * 25.4;
      }
      function ftToM(ft) {
        return ft * 0.3048;
      }
      function mToFt(m) {
        return m / 0.3048;
      }

      function populateBarSizes() {
        const system = document.getElementById("bar-system").value;
        const select = document.getElementById("bar-size");
        select.innerHTML = "";
        const data = system === "us" ? usBars : metricBars;
        Object.keys(data).forEach((key) => {
          const opt = document.createElement("option");
          opt.value = key;
          opt.textContent = key;
          select.appendChild(opt);
        });
        updateBarInfo();
      }

      function updateBarInfo() {
        const system = document.getElementById("bar-system").value;
        const size = document.getElementById("bar-size").value;
        const density =
          parseFloat(document.getElementById("steel-density").value) || 7850;
        const barInfo = document.getElementById("bar-info");
        if (!size) {
          barInfo.textContent = "";
          return;
        }
        const d_mm = system === "us" ? usBars[size] : metricBars[size];
        const d_m = d_mm / 1000;
        const area = Math.PI * Math.pow(d_m / 2, 2); // m²
        const unitWeight = density * area; // kg/m
        const unitWeightLbFt = (unitWeight * 2.2046226218) / 3.280839895; // lb/ft
        const d_in = mmToIn(d_mm);
        barInfo.textContent =
          system === "us"
            ? `Ø ≈ ${d_in.toFixed(3)} in, ${unitWeightLbFt.toFixed(3)} lb/ft`
            : `Ø = ${d_mm.toFixed(1)} mm, ${unitWeight.toFixed(2)} kg/m`;
      }

      function switchUnits(unit) {
        currentUnit = unit;
        const isImp = unit === "imperial";

        document.getElementById("cover-unit").textContent = isImp ? "in" : "mm";
        document.getElementById("slab-length-unit").textContent = isImp
          ? "ft"
          : "m";
        document.getElementById("slab-width-unit").textContent = isImp
          ? "ft"
          : "m";
        document.getElementById("slab-thickness-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-long-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-short-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-long-top-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-short-top-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("wall-length-unit").textContent = isImp
          ? "ft"
          : "m";
        document.getElementById("wall-height-unit").textContent = isImp
          ? "ft"
          : "m";
        document.getElementById("wall-thickness-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-vert-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("spacing-horiz-unit").textContent = isImp
          ? "in"
          : "mm";
        document.getElementById("bar-length-unit").textContent = isImp
          ? "ft"
          : "m";

        const lapType = document.getElementById("lap-type").value;
        document.getElementById("lap-extra-unit").textContent =
          lapType === "diameter" ? "× bar Ø" : isImp ? "in" : "mm";

        document
          .getElementById("unit-imperial")
          .classList.toggle("bg-blue-600", isImp);
        document
          .getElementById("unit-imperial")
          .classList.toggle("text-white", isImp);
        document
          .getElementById("unit-imperial")
          .classList.toggle("bg-gray-100", !isImp);
        document
          .getElementById("unit-imperial")
          .classList.toggle("text-gray-700", !isImp);

        document
          .getElementById("unit-metric")
          .classList.toggle("bg-blue-600", !isImp);
        document
          .getElementById("unit-metric")
          .classList.toggle("text-white", !isImp);
        document
          .getElementById("unit-metric")
          .classList.toggle("bg-gray-100", isImp);
        document
          .getElementById("unit-metric")
          .classList.toggle("text-gray-700", isImp);
      }

      function handleLapTypeChange() {
        const type = document.getElementById("lap-type").value;
        const container = document.getElementById("lap-extra-container");
        if (type === "none") {
          container.classList.add("hidden");
        } else {
          container.classList.remove("hidden");
          document.getElementById("lap-extra-unit").textContent =
            type === "diameter"
              ? "× bar Ø"
              : currentUnit === "imperial"
              ? "in"
              : "mm";
        }
      }

      function getBarDiameterM() {
        const system = document.getElementById("bar-system").value;
        const size = document.getElementById("bar-size").value;
        const d_mm = system === "us" ? usBars[size] : metricBars[size];
        return d_mm / 1000;
      }

      function getUnitWeightKgPerM() {
        const density =
          parseFloat(document.getElementById("steel-density").value) || 7850;
        const d = getBarDiameterM();
        const area = Math.PI * Math.pow(d / 2, 2);
        return density * area;
      }

      function spacingToM(value) {
        if (currentUnit === "imperial") {
          return (value || 0) * 0.0254; // inches to m
        }
        return (value || 0) / 1000; // mm to m
      }

      function lengthToM(value) {
        if (currentUnit === "imperial") {
          return ftToM(value || 0);
        }
        return value || 0;
      }

      function coverToM(value) {
        if (currentUnit === "imperial") {
          return (value || 0) * 0.0254;
        }
        return (value || 0) / 1000;
      }

      function lapLengthM() {
        const type = document.getElementById("lap-type").value;
        if (type === "none") return 0;
        const extra =
          parseFloat(document.getElementById("lap-extra").value) || 0;
        if (type === "diameter") {
          return extra * getBarDiameterM();
        }
        // fixed length
        if (currentUnit === "imperial") {
          return extra * 0.0254;
        }
        return extra / 1000;
      }

      function calcSlab() {
        const L = lengthToM(
          parseFloat(document.getElementById("slab-length").value)
        );
        const W = lengthToM(
          parseFloat(document.getElementById("slab-width").value)
        );
        const cover = coverToM(
          parseFloat(document.getElementById("cover").value)
        );
        const sLong = spacingToM(
          parseFloat(document.getElementById("spacing-long").value)
        );
        const sShort = spacingToM(
          parseFloat(document.getElementById("spacing-short").value)
        );
        const includeTop = document.getElementById("include-top-layer").checked;
        const sLongTop = spacingToM(
          parseFloat(document.getElementById("spacing-long-top").value)
        );
        const sShortTop = spacingToM(
          parseFloat(document.getElementById("spacing-short-top").value)
        );
        const lap = lapLengthM();

        if (L <= 0 || W <= 0 || sLong <= 0 || sShort <= 0) return null;

        const Lclear = Math.max(L - 2 * cover, 0);
        const Wclear = Math.max(W - 2 * cover, 0);

        function countBars(span, spacing) {
          if (spacing <= 0) return 0;
          return Math.floor(span / spacing) + 1;
        }

        const nLongBottom = countBars(Wclear, sLong);
        const nShortBottom = countBars(Lclear, sShort);

        let nLongTop = 0,
          nShortTop = 0;
        if (includeTop && sLongTop > 0 && sShortTop > 0) {
          nLongTop = countBars(Wclear, sLongTop);
          nShortTop = countBars(Lclear, sShortTop);
        }

        const nTotal = nLongBottom + nShortBottom + nLongTop + nShortTop;

        function barLengthWithLap(span) {
          // assume 1 lap per bar for long spans; this is a simplification
          return span + lap;
        }

        const lenLongBottom = nLongBottom * barLengthWithLap(Lclear);
        const lenShortBottom = nShortBottom * barLengthWithLap(Wclear);
        const lenLongTop = nLongTop * barLengthWithLap(Lclear);
        const lenShortTop = nShortTop * barLengthWithLap(Wclear);

        const totalLen =
          lenLongBottom + lenShortBottom + lenLongTop + lenShortTop;

        return { nTotal, totalLen };
      }

      function calcWall() {
        const L = lengthToM(
          parseFloat(document.getElementById("wall-length").value)
        );
        const H = lengthToM(
          parseFloat(document.getElementById("wall-height").value)
        );
        const cover = coverToM(
          parseFloat(document.getElementById("cover").value)
        );
        const sVert = spacingToM(
          parseFloat(document.getElementById("spacing-vert").value)
        );
        const sHoriz = spacingToM(
          parseFloat(document.getElementById("spacing-horiz").value)
        );
        const doubleFace = document.getElementById("double-face").checked;
        const lap = lapLengthM();

        if (L <= 0 || H <= 0 || sVert <= 0 || sHoriz <= 0) return null;

        const Lclear = Math.max(L - 2 * cover, 0);
        const Hclear = Math.max(H - 2 * cover, 0);

        function countBars(span, spacing) {
          if (spacing <= 0) return 0;
          return Math.floor(span / spacing) + 1;
        }

        const nVertFace = countBars(Lclear, sVert);
        const nHorizFace = countBars(Hclear, sHoriz);

        const faces = doubleFace ? 2 : 1;
        const nVertTotal = nVertFace * faces;
        const nHorizTotal = nHorizFace * faces;

        function barLengthWithLap(span) {
          return span + lap;
        }

        const lenVert = nVertTotal * barLengthWithLap(Hclear);
        const lenHoriz = nHorizTotal * barLengthWithLap(Lclear);

        const nTotal = nVertTotal + nHorizTotal;
        const totalLen = lenVert + lenHoriz;

        return { nTotal, totalLen };
      }

      function applyWaste(lengthM, wastePercent) {
        return lengthM * (1 + (wastePercent || 0) / 100);
      }

      function formatLength(lengthM) {
        if (currentUnit === "imperial") {
          const ft = mToFt(lengthM);
          return `${ft.toFixed(1)} ft`;
        }
        return `${lengthM.toFixed(2)} m`;
      }

      function formatWeight(kg) {
        if (currentUnit === "imperial") {
          const lb = kg * 2.2046226218;
          return `${lb.toFixed(1)} lb`;
        }
        return `${kg.toFixed(1)} kg`;
      }

      function calculate() {
        const mode = document
          .getElementById("panel-slab")
          .classList.contains("hidden")
          ? "wall"
          : "slab";
        const waste = parseFloat(document.getElementById("waste").value) || 0;
        const barLenInput =
          parseFloat(document.getElementById("bar-length").value) || 0;
        const unitCost =
          parseFloat(document.getElementById("unit-cost").value) || 0;
        const unitCostType = document.getElementById("unit-cost-type").value;

        const barLenM =
          currentUnit === "imperial" ? ftToM(barLenInput) : barLenInput;

        const res = mode === "slab" ? calcSlab() : calcWall();
        if (!res) {
          document.getElementById("res-bars").textContent =
            "Bars: – (check inputs)";
          document.getElementById("res-length").textContent = "Total length: –";
          document.getElementById("res-length-std").textContent =
            "Standard bars: –";
          document.getElementById("res-weight").textContent = "Total weight: –";
          document.getElementById("res-cost").textContent = "Estimated cost: –";
          return;
        }

        const lengthWithWaste = applyWaste(res.totalLen, waste);
        const unitWeight = getUnitWeightKgPerM();
        const totalWeightKg = lengthWithWaste * unitWeight;

        let stdBars = 0;
        if (barLenM > 0) {
          stdBars = Math.ceil(lengthWithWaste / barLenM);
        }

        let cost = 0;
        if (unitCost > 0) {
          if (unitCostType === "per-length") {
            // cost per standard bar length
            cost = stdBars * unitCost;
          } else {
            // per weight (kg or lb depending on units)
            if (currentUnit === "imperial") {
              const lb = totalWeightKg * 2.2046226218;
              cost = lb * unitCost;
            } else {
              cost = totalWeightKg * unitCost;
            }
          }
        }

        document.getElementById(
          "res-bars"
        ).textContent = `Bars (approx.): ${res.nTotal.toLocaleString()}`;
        document.getElementById(
          "res-length"
        ).textContent = `Total length (incl. waste): ${formatLength(
          lengthWithWaste
        )}`;
        document.getElementById("res-length-std").textContent =
          barLenM > 0
            ? `Standard bars of ${
                currentUnit === "imperial"
                  ? barLenInput + " ft"
                  : barLenInput + " m"
              }: ${stdBars.toLocaleString()}`
            : "Standard bars: –";

        document.getElementById(
          "res-weight"
        ).textContent = `Total weight: ${formatWeight(totalWeightKg)}`;
        document.getElementById("res-cost").textContent =
          unitCost > 0
            ? `Estimated cost: $${cost.toFixed(2)}`
            : "Estimated cost: –";
      }

      function resetForm() {
        document.getElementById("slab-length").value = 20;
        document.getElementById("slab-width").value = 12;
        document.getElementById("slab-thickness").value = 6;
        document.getElementById("spacing-long").value = 12;
        document.getElementById("spacing-short").value = 12;
        document.getElementById("include-top-layer").checked = false;
        document.getElementById("top-layer-container").classList.add("hidden");
        document.getElementById("spacing-long-top").value = 12;
        document.getElementById("spacing-short-top").value = 12;

        document.getElementById("wall-length").value = 20;
        document.getElementById("wall-height").value = 8;
        document.getElementById("wall-thickness").value = 8;
        document.getElementById("spacing-vert").value = 16;
        document.getElementById("spacing-horiz").value = 16;
        document.getElementById("double-face").checked = false;

        document.getElementById("cover").value = 2;
        document.getElementById("lap-type").value = "none";
        document.getElementById("lap-extra-container").classList.add("hidden");
        document.getElementById("lap-extra").value = 40;
        document.getElementById("waste").value = 5;
        document.getElementById("bar-length").value = 20;
        document.getElementById("unit-cost").value = 0.75;
        document.getElementById("unit-cost-type").value = "per-length";
        document.getElementById("steel-density").value = 7850;

        populateBarSizes();
        calculate();
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateBarSizes();

        document.getElementById("bar-system").addEventListener("change", () => {
          populateBarSizes();
        });
        document
          .getElementById("bar-size")
          .addEventListener("change", updateBarInfo);
        document
          .getElementById("steel-density")
          .addEventListener("input", updateBarInfo);

        document
          .getElementById("unit-imperial")
          .addEventListener("click", () => switchUnits("imperial"));
        document
          .getElementById("unit-metric")
          .addEventListener("click", () => switchUnits("metric"));

        document
          .getElementById("lap-type")
          .addEventListener("change", handleLapTypeChange);

        document
          .getElementById("include-top-layer")
          .addEventListener("change", (e) => {
            document
              .getElementById("top-layer-container")
              .classList.toggle("hidden", !e.target.checked);
          });

        document
          .getElementById("unit-cost-type")
          .addEventListener("change", () => {
            const type = document.getElementById("unit-cost-type").value;
            const note = document.getElementById("unit-cost-note");
            if (type === "per-length") {
              note.textContent = "Per bar length (e.g. per 20 ft or 6 m bar).";
            } else {
              note.textContent =
                currentUnit === "imperial"
                  ? "Per weight (e.g. $/lb)."
                  : "Per weight (e.g. $/kg).";
            }
          });

        document
          .getElementById("btn-calc")
          .addEventListener("click", calculate);
        document
          .getElementById("btn-reset")
          .addEventListener("click", resetForm);

        // Tabs
        document.getElementById("tab-slab").addEventListener("click", () => {
          document.getElementById("panel-slab").classList.remove("hidden");
          document.getElementById("panel-wall").classList.add("hidden");
          document.getElementById("tab-slab").classList.add("tab-active");
          document.getElementById("tab-wall").classList.remove("tab-active");
          calculate();
        });
        document.getElementById("tab-wall").addEventListener("click", () => {
          document.getElementById("panel-wall").classList.remove("hidden");
          document.getElementById("panel-slab").classList.add("hidden");
          document.getElementById("tab-wall").classList.add("tab-active");
          document.getElementById("tab-slab").classList.remove("tab-active");
          calculate();
        });

        // Initial state
        switchUnits("imperial");
        calculate();
      });
    </script>

