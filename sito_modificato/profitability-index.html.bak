    <script>
      (function () {
        const currencyEl = document.getElementById("currency");
        const discountRateEl = document.getElementById("discount-rate");
        const yearsEl = document.getElementById("years");
        const applyYearsBtn = document.getElementById("apply-years");
        const cashflowBody = document.getElementById("cashflow-body");
        const addRowBtn = document.getElementById("add-row");
        const removeRowBtn = document.getElementById("remove-row");
        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const exportCsvBtn = document.getElementById("export-csv-btn");
        const piResultEl = document.getElementById("pi-result");
        const piInterpEl = document.getElementById("pi-interpretation");
        const npvResultEl = document.getElementById("npv-result");
        const npvNoteEl = document.getElementById("npv-note");
        const pvInflowsEl = document.getElementById("pv-inflows");
        const pvOutflowsEl = document.getElementById("pv-outflows");
        const decisionBox = document.getElementById("decision-box");
        const decisionText = document.getElementById("decision-text");
        const decisionDetail = document.getElementById("decision-detail");
        const piDefinitionRadios = document.querySelectorAll(
          'input[name="pi-definition"]'
        );

        function getSelectedDefinition() {
          for (const r of piDefinitionRadios) {
            if (r.checked) return r.value;
          }
          return "standard";
        }

        function createRow(t, cf = 0, type = null) {
          const tr = document.createElement("tr");
          tr.dataset.t = t;

          const isYear0 = t === 0;
          const defaultType = type || (isYear0 ? "outflow" : "inflow");

          tr.innerHTML = `
      <td class="px-3 py-2 border-b border-gray-100 text-gray-700">t = ${t}</td>
      <td class="px-3 py-2 border-b border-gray-100">
        <div class="flex items-center">
          <span class="mr-1 text-gray-500 currency-symbol">${
            currencyEl.value
          }</span>
          <input type="number" step="0.01" class="input-number w-full border-gray-300 rounded-md text-sm px-2 py-1 focus:ring-blue-500 focus:border-blue-500 cf-input" value="${cf}">
        </div>
      </td>
      <td class="px-3 py-2 border-b border-gray-100">
        <select class="type-select w-full border-gray-300 rounded-md text-xs px-1 py-1 focus:ring-blue-500 focus:border-blue-500">
          <option value="inflow"${
            defaultType === "inflow" ? " selected" : ""
          }>Inflow (+)</option>
          <option value="outflow"${
            defaultType === "outflow" ? " selected" : ""
          }>Outflow (−)</option>
        </select>
      </td>
      <td class="px-3 py-2 border-b border-gray-100 text-gray-700">
        <span class="discount-factor">–</span>
      </td>
      <td class="px-3 py-2 border-b border-gray-100 text-gray-700">
        <span class="pv-cell">–</span>
      </td>
    `;
          cashflowBody.appendChild(tr);
        }

        function buildInitialTable(nYears) {
          cashflowBody.innerHTML = "";
          const years = Math.max(1, Math.min(50, nYears || 5));
          yearsEl.value = years;
          for (let t = 0; t <= years; t++) {
            let cf = 0;
            if (t === 0) cf = -100000;
            else cf = 30000;
            createRow(t, cf);
          }
          clearResults();
        }

        function clearResults() {
          piResultEl.textContent = "–";
          piInterpEl.textContent = "";
          npvResultEl.textContent = "–";
          npvNoteEl.textContent = "";
          pvInflowsEl.textContent = "–";
          pvOutflowsEl.textContent = "–";
          decisionBox.classList.add("hidden");
          decisionBox.classList.remove(
            "border-green-200",
            "bg-green-50",
            "border-red-200",
            "bg-red-50",
            "border-yellow-200",
            "bg-yellow-50"
          );
        }

        function updateCurrencySymbols() {
          const symbol = currencyEl.value;
          document.querySelectorAll(".currency-symbol").forEach((el) => {
            el.textContent = symbol;
          });
        }

        function parseNumber(val) {
          const n = parseFloat(val);
          return isNaN(n) ? 0 : n;
        }

        function formatCurrency(val) {
          if (!isFinite(val)) return "–";
          const symbol = currencyEl.value || "";
          const absVal = Math.abs(val);
          const decimals = absVal >= 1000 ? 0 : 2;
          return (
            symbol +
            val.toLocaleString(undefined, {
              minimumFractionDigits: decimals,
              maximumFractionDigits: decimals,
            })
          );
        }

        function formatNumber(val, decimals = 3) {
          if (!isFinite(val)) return "–";
          return val.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          });
        }

        function calculate() {
          const r = parseNumber(discountRateEl.value) / 100;
          if (!isFinite(r)) return;

          let pvInflows = 0;
          let pvOutflows = 0;
          let npv = 0;

          const rows = cashflowBody.querySelectorAll("tr");
          rows.forEach((tr) => {
            const t = parseInt(tr.dataset.t, 10);
            const cfInput = tr.querySelector(".cf-input");
            const typeSelect = tr.querySelector(".type-select");
            const dfSpan = tr.querySelector(".discount-factor");
            const pvSpan = tr.querySelector(".pv-cell");

            const cf = parseNumber(cfInput.value);
            const df = 1 / Math.pow(1 + r, t);
            const pv = cf * df;

            dfSpan.textContent = formatNumber(df, 4);
            pvSpan.textContent = formatCurrency(pv);

            npv += pv;

            const type = typeSelect.value;
            if (type === "inflow" && cf > 0) {
              pvInflows += pv;
            } else if (type === "outflow" && cf < 0) {
              pvOutflows += pv;
            }
          });

          const definition = getSelectedDefinition();
          let denominator = 0;
          if (definition === "standard") {
            const row0 = cashflowBody.querySelector('tr[data-t="0"]');
            if (!row0) return;
            const cf0 = parseNumber(row0.querySelector(".cf-input").value);
            if (cf0 >= 0) {
              denominator = Math.abs(cf0) || 0;
            } else {
              denominator = Math.abs(cf0);
            }
          } else {
            denominator = Math.abs(pvOutflows);
          }

          pvInflowsEl.textContent = formatCurrency(pvInflows);
          pvOutflowsEl.textContent = formatCurrency(pvOutflows);

          npvResultEl.textContent = formatCurrency(npv);
          if (npv > 0) {
            npvNoteEl.textContent =
              "Positive NPV: the project adds value at this discount rate.";
          } else if (npv < 0) {
            npvNoteEl.textContent =
              "Negative NPV: the project destroys value at this discount rate.";
          } else {
            npvNoteEl.textContent =
              "NPV is approximately zero: the project just breaks even.";
          }

          let pi = null;
          if (denominator > 0) {
            pi = pvInflows / denominator;
          }

          if (pi === null || !isFinite(pi)) {
            piResultEl.textContent = "–";
            piInterpEl.textContent =
              "Unable to compute PI. Check that you have a non-zero investment/outflow.";
            decisionBox.classList.add("hidden");
            return;
          }

          piResultEl.textContent = formatNumber(pi, 3);

          let interp = "";
          if (pi > 1) {
            interp =
              "PI > 1: the present value of inflows exceeds the investment.";
          } else if (Math.abs(pi - 1) < 1e-3) {
            interp = "PI ≈ 1: the project breaks even in NPV terms.";
          } else {
            interp =
              "PI < 1: the present value of inflows is less than the investment.";
          }
          piInterpEl.textContent = interp;

          decisionBox.classList.remove(
            "hidden",
            "border-green-200",
            "bg-green-50",
            "border-red-200",
            "bg-red-50",
            "border-yellow-200",
            "bg-yellow-50"
          );

          if (pi > 1) {
            decisionBox.classList.add("border-green-200", "bg-green-50");
            decisionText.textContent = "Decision: Accept (PI > 1)";
            decisionDetail.textContent =
              "Based on the profitability index, this project creates value relative to its cost and would normally be accepted, especially under capital rationing.";
          } else if (pi < 1) {
            decisionBox.classList.add("border-red-200", "bg-red-50");
            decisionText.textContent = "Decision: Reject (PI < 1)";
            decisionDetail.textContent =
              "The project’s discounted inflows do not cover the investment. Unless there are strategic reasons, it would typically be rejected.";
          } else {
            decisionBox.classList.add("border-yellow-200", "bg-yellow-50");
            decisionText.textContent = "Decision: Indifferent (PI ≈ 1)";
            decisionDetail.textContent =
              "The project roughly breaks even in NPV terms. Other qualitative or strategic factors may drive the decision.";
          }
        }

        function resetAll() {
          discountRateEl.value = 10;
          currencyEl.value = "$";
          updateCurrencySymbols();
          buildInitialTable(5);
        }

        function exportCsv() {
          const r = parseNumber(discountRateEl.value) / 100;
          const rows = cashflowBody.querySelectorAll("tr");
          const lines = [];
          lines.push(
            [
              "Year (t)",
              "Cash flow",
              "Type",
              "Discount factor",
              "Present value",
            ].join(",")
          );

          rows.forEach((tr) => {
            const t = parseInt(tr.dataset.t, 10);
            const cf = parseNumber(tr.querySelector(".cf-input").value);
            const type = tr.querySelector(".type-select").value;
            const df = 1 / Math.pow(1 + r, t);
            const pv = cf * df;
            lines.push(
              [t, cf.toFixed(2), type, df.toFixed(6), pv.toFixed(2)].join(",")
            );
          });

          const blob = new Blob([lines.join("\n")], {
            type: "text/csv;charset=utf-8;",
          });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = "profitability-index-cashflows.csv";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        }

        applyYearsBtn.addEventListener("click", () => {
          const n = parseInt(yearsEl.value, 10);
          buildInitialTable(n);
        });

        addRowBtn.addEventListener("click", () => {
          const rows = cashflowBody.querySelectorAll("tr");
          let maxT = -1;
          rows.forEach((tr) => {
            const t = parseInt(tr.dataset.t, 10);
            if (t > maxT) maxT = t;
          });
          const newT = maxT + 1;
          if (newT > 50) return;
          createRow(newT, 30000, "inflow");
          yearsEl.value = newT;
          clearResults();
        });

        removeRowBtn.addEventListener("click", () => {
          const rows = cashflowBody.querySelectorAll("tr");
          if (rows.length <= 1) return;
          const last = rows[rows.length - 1];
          const t = parseInt(last.dataset.t, 10);
          if (t === 0) return;
          last.remove();
          yearsEl.value = t - 1;
          clearResults();
        });

        calculateBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetAll);
        exportCsvBtn.addEventListener("click", exportCsv);
        currencyEl.addEventListener("change", updateCurrencySymbols);
        piDefinitionRadios.forEach((r) =>
          r.addEventListener("change", () => {
            clearResults();
          })
        );

        resetAll();
      })();
    </script>
  
