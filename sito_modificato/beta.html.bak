    <script>
      // Tab switching
      const modeTabs = document.querySelectorAll(".beta-mode-tab");
      const modeSections = {
        capm: document.getElementById("beta-mode-capm"),
        regression: document.getElementById("beta-mode-regression"),
        portfolio: document.getElementById("beta-mode-portfolio"),
      };

      modeTabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const mode = tab.getAttribute("data-mode");
          modeTabs.forEach((t) => {
            t.classList.remove("border-blue-600", "text-blue-600");
            t.classList.add("border-transparent", "text-gray-500");
          });
          tab.classList.add("border-blue-600", "text-blue-600");
          tab.classList.remove("border-transparent", "text-gray-500");

          Object.keys(modeSections).forEach((key) => {
            modeSections[key].classList.toggle("hidden", key !== mode);
          });
        });
      });

      // CAPM calculations
      function classifyBeta(beta) {
        if (!isFinite(beta))
          return { label: "N/A", note: "Insufficient data to classify risk." };
        if (beta < 0)
          return {
            label: "Negative beta (hedging asset)",
            note: "Tends to move opposite to the market.",
          };
        if (beta < 0.8)
          return {
            label: "Defensive (low beta)",
            note: "Less volatile than the market.",
          };
        if (beta <= 1.2)
          return {
            label: "Market-like risk",
            note: "Similar volatility to the market.",
          };
        return {
          label: "Aggressive (high beta)",
          note: "More volatile than the market.",
        };
      }

      function formatPercent(v, decimals = 1) {
        if (!isFinite(v)) return "–";
        return v.toFixed(decimals) + "%";
      }

      document.getElementById("btnCapmCalc").addEventListener("click", () => {
        const rf = parseFloat(document.getElementById("riskFree").value) || 0;
        const rm =
          parseFloat(document.getElementById("marketReturn").value) || 0;
        const beta = parseFloat(document.getElementById("assetBeta").value);

        const premium = rm - rf;
        const expected = rf + (isFinite(beta) ? beta * premium : 0);

        document.getElementById("capmMarketPremium").textContent =
          formatPercent(premium);
        document.getElementById("capmExpectedReturn").textContent =
          formatPercent(expected);

        const cls = classifyBeta(beta);
        document.getElementById("capmRiskClass").textContent = cls.label;
        document.getElementById("capmRiskNote").textContent = cls.note;
      });

      document.getElementById("btnCapmReset").addEventListener("click", () => {
        document.getElementById("riskFree").value = 2;
        document.getElementById("marketReturn").value = 8;
        document.getElementById("assetBeta").value = 1.2;
        document.getElementById("btnCapmCalc").click();
      });

      // Initialize CAPM defaults
      document.getElementById("btnCapmCalc").click();

      // Regression mode: table setup and calculations
      const regressionTableBody = document.getElementById(
        "regressionTableBody"
      );
      const regressionWarning = document.getElementById("regressionWarning");

      function addRegressionRows(count = 5) {
        const currentRows = regressionTableBody.querySelectorAll("tr").length;
        for (let i = 0; i < count; i++) {
          const idx = currentRows + i + 1;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="text-center">${idx}</td>
        <td><input type="number" step="0.01" placeholder="" /></td>
        <td><input type="number" step="0.01" placeholder="" /></td>
      `;
          regressionTableBody.appendChild(tr);
        }
      }

      function clearRegressionTable() {
        regressionTableBody.innerHTML = "";
      }

      // Seed with 10 example rows (roughly realistic monthly returns)
      function seedRegressionExample() {
        clearRegressionTable();
        const asset = [2.1, -1.5, 3.0, 1.2, -0.8, 2.5, 0.9, -2.0, 1.8, 2.2];
        const market = [1.5, -1.0, 2.0, 0.8, -0.5, 1.7, 0.6, -1.4, 1.2, 1.6];
        for (let i = 0; i < asset.length; i++) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="text-center">${i + 1}</td>
        <td><input type="number" step="0.01" value="${asset[i]}" /></td>
        <td><input type="number" step="0.01" value="${market[i]}" /></td>
      `;
          regressionTableBody.appendChild(tr);
        }
      }

      seedRegressionExample();

      document
        .getElementById("btnRegressionAddRow")
        .addEventListener("click", () => addRegressionRows(5));
      document
        .getElementById("btnRegressionClear")
        .addEventListener("click", () => {
          clearRegressionTable();
          addRegressionRows(5);
          document.getElementById("regBeta").textContent = "–";
          document.getElementById("regAlpha").textContent = "–";
          document.getElementById("regR2").textContent = "–";
          regressionWarning.classList.add("hidden");
        });

      document
        .getElementById("btnRegressionCalc")
        .addEventListener("click", () => {
          const rows = Array.from(regressionTableBody.querySelectorAll("tr"));
          const x = []; // market
          const y = []; // asset

          rows.forEach((row) => {
            const inputs = row.querySelectorAll("input");
            const a = parseFloat(inputs[0].value);
            const m = parseFloat(inputs[1].value);
            if (isFinite(a) && isFinite(m)) {
              y.push(a / 100); // convert to decimal
              x.push(m / 100);
            }
          });

          if (x.length < 3) {
            regressionWarning.textContent =
              "Enter at least 3 valid pairs of returns to estimate beta.";
            regressionWarning.classList.remove("hidden");
            return;
          }
          regressionWarning.classList.add("hidden");

          const n = x.length;
          const meanX = x.reduce((s, v) => s + v, 0) / n;
          const meanY = y.reduce((s, v) => s + v, 0) / n;

          let covXY = 0,
            varX = 0,
            varY = 0;
          for (let i = 0; i < n; i++) {
            const dx = x[i] - meanX;
            const dy = y[i] - meanY;
            covXY += dx * dy;
            varX += dx * dx;
            varY += dy * dy;
          }
          covXY / (n - 1);
          varX / (n - 1);
          varY / (n - 1);

          const beta = varX === 0 ? NaN : covXY / varX;
          const alpha = meanY - (isFinite(beta) ? beta * meanX : 0);

          // R^2
          let ssTot = 0,
            ssRes = 0;
          for (let i = 0; i < n; i++) {
            const yHat = isFinite(beta) ? alpha + beta * x[i] : meanY;
            ssTot += Math.pow(y[i] - meanY, 2);
            ssRes += Math.pow(y[i] - yHat, 2);
          }
          const r2 = ssTot === 0 ? NaN : 1 - ssRes / ssTot;

          document.getElementById("regBeta").textContent = isFinite(beta)
            ? beta.toFixed(3)
            : "–";
          document.getElementById("regAlpha").textContent = isFinite(alpha)
            ? (alpha * 100).toFixed(2) + "%"
            : "–";
          document.getElementById("regR2").textContent = isFinite(r2)
            ? r2.toFixed(3)
            : "–";

          // Optionally push beta into CAPM tab
          if (isFinite(beta)) {
            document.getElementById("assetBeta").value = beta.toFixed(3);
          }
        });

      // Portfolio mode
      const portfolioTableBody = document.getElementById("portfolioTableBody");

      function addPortfolioRow(name = "", value = "", beta = "") {
        const tr = document.createElement("tr");
        tr.innerHTML = `
      <td><input type="text" placeholder="Asset name" style="text-align:left;"></td>
      <td><input type="number" step="0.01" value="${value}" /></td>
      <td><input type="number" step="0.01" value="${beta}" /></td>
      <td class="portfolio-weight-cell">–</td>
    `;
        const nameInput = tr.querySelector("td:first-child input");
        if (name) nameInput.value = name;
        portfolioTableBody.appendChild(tr);
      }

      function seedPortfolioExample() {
        portfolioTableBody.innerHTML = "";
        addPortfolioRow("Stock A", "5000", "1.3");
        addPortfolioRow("Stock B", "3000", "0.8");
        addPortfolioRow("Bond Fund", "2000", "0.2");
      }

      seedPortfolioExample();

      document
        .getElementById("btnPortfolioAddRow")
        .addEventListener("click", () => addPortfolioRow());
      document
        .getElementById("btnPortfolioClear")
        .addEventListener("click", () => {
          portfolioTableBody.innerHTML = "";
          addPortfolioRow();
          document.getElementById("portfolioBeta").textContent = "–";
          document.getElementById("portfolioTotalValue").textContent = "–";
          document.getElementById("portfolioRiskClass").textContent = "–";
          document.getElementById("portfolioRiskNote").textContent =
            "Compare βp to 1 to gauge risk vs. market.";
        });

      document
        .getElementById("btnPortfolioCalc")
        .addEventListener("click", () => {
          const rows = Array.from(portfolioTableBody.querySelectorAll("tr"));
          let totalValue = 0;
          const values = [];
          const betas = [];

          rows.forEach((row) => {
            const inputs = row.querySelectorAll("input");
            const value = parseFloat(inputs[1].value);
            const beta = parseFloat(inputs[2].value);
            if (isFinite(value) && value > 0 && isFinite(beta)) {
              values.push(value);
              betas.push(beta);
              totalValue += value;
            }
          });

          if (totalValue <= 0 || values.length === 0) {
            document.getElementById("portfolioBeta").textContent = "–";
            document.getElementById("portfolioTotalValue").textContent = "–";
            document.getElementById("portfolioRiskClass").textContent = "N/A";
            document.getElementById("portfolioRiskNote").textContent =
              "Enter positive values and betas for at least one asset.";
            portfolioTableBody
              .querySelectorAll(".portfolio-weight-cell")
              .forEach((td) => (td.textContent = "–"));
            return;
          }

          let betaP = 0;
          let idx = 0;
          portfolioTableBody.querySelectorAll("tr").forEach((row) => {
            const inputs = row.querySelectorAll("input");
            const value = parseFloat(inputs[1].value);
            const beta = parseFloat(inputs[2].value);
            const weightCell = row.querySelector(".portfolio-weight-cell");
            if (isFinite(value) && value > 0 && isFinite(beta)) {
              const w = value / totalValue;
              betaP += w * beta;
              weightCell.textContent = (w * 100).toFixed(1) + "%";
            } else {
              weightCell.textContent = "–";
            }
            idx++;
          });

          document.getElementById("portfolioBeta").textContent =
            betaP.toFixed(3);
          document.getElementById("portfolioTotalValue").textContent =
            totalValue.toLocaleString(undefined, { maximumFractionDigits: 2 });
          const cls = classifyBeta(betaP);
          document.getElementById("portfolioRiskClass").textContent = cls.label;
          document.getElementById("portfolioRiskNote").textContent = cls.note;

          // Optionally push portfolio beta into CAPM tab
          document.getElementById("assetBeta").value = betaP.toFixed(3);
        });

      // Accessibility: ensure first mode visible on load (already set) and tables seeded
    </script>

