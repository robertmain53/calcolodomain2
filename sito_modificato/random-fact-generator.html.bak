      const copyFactBtn = document.getElementById("copy-fact-btn");
      const saveFactBtn = document.getElementById("save-fact-btn");
      const shareFactBtn = document.getElementById("share-fact-btn");
      const actionStatusEl = document.getElementById("action-status");
      const lengthFilterEl = document.getElementById("length-filter");
      const noRepeatToggleEl = document.getElementById("no-repeat-toggle");
      const safeModeToggleEl = document.getElementById("safe-mode-toggle");
      const categoryChips = Array.from(
        document.querySelectorAll(".category-chip")
      );
      const favoritesListEl = document.getElementById("favorites-list");
      const favoritesEmptyEl = document.getElementById("favorites-empty");
      const clearFavoritesBtn = document.getElementById("clear-favorites-btn");
      const saveLabelEl = document.getElementById("save-label");

      let activeCategory = "all";
      let recentHistory = [];
      const RECENT_HISTORY_LIMIT = 10;
      let favorites = [];

      function categorizeLength(text) {
        const len = text.length;
        if (len <= 120) return "Short";
        if (len <= 220) return "Medium";
        return "Long";
      }

      function matchesLengthFilter(text, filter) {
        const len = text.length;
        if (filter === "short") return len <= 120;
        if (filter === "medium") return len <= 220;
        if (filter === "long") return len > 220;
        return true;
      }

      function getFilteredFacts() {
        const lengthFilter = lengthFilterEl.value;
        const safeMode = safeModeToggleEl.checked;
        return FACTS.filter((f) => {
          if (activeCategory !== "all" && f.category !== activeCategory)
            return false;
          if (safeMode && !f.safe) return false;
          if (!matchesLengthFilter(f.text, lengthFilter)) return false;
          return true;
        });
      }

      function pickRandomFact() {
        const pool = getFilteredFacts();
        if (pool.length === 0) return null;

        const avoidRepeats = noRepeatToggleEl.checked;
        let candidate = null;
        let attempts = 0;
        const maxAttempts = 8;

        while (attempts < maxAttempts) {
          const idx = Math.floor(Math.random() * pool.length);
          candidate = pool[idx];
          if (!avoidRepeats || !recentHistory.includes(candidate.text)) break;
          attempts++;
        }

        if (avoidRepeats) {
          recentHistory.unshift(candidate.text);
          if (recentHistory.length > RECENT_HISTORY_LIMIT) {
            recentHistory = recentHistory.slice(0, RECENT_HISTORY_LIMIT);
          }
        }

        return candidate;
      }

      function applyFactToUI(fact) {
        if (!fact) {
          factTextEl.textContent =
            "No facts match your current filters. Try selecting more categories or changing the length filter.";
          factCategoryLabelEl.textContent = "None";
          factLengthLabelEl.textContent = "N/A";
          return;
        }

        // Simple fade-in
        factTextEl.classList.remove("fact-fade-enter-active");
        factTextEl.classList.add("fact-fade-enter");
        requestAnimationFrame(() => {
          factTextEl.textContent = fact.text;
          factTextEl.classList.remove("fact-fade-enter");
          factTextEl.classList.add("fact-fade-enter-active");
        });

        // Category label
        const categoryMap = {
          science: "Science",
          history: "History",
          space: "Space",
          animals: "Animals",
          "human-body": "Human body",
          tech: "Technology",
          word: "Language",
          math: "Math",
          "just-weird": "Just weird",
        };
        factCategoryLabelEl.textContent =
          categoryMap[fact.category] || "General";

        // Length label
        factLengthLabelEl.textContent = categorizeLength(fact.text);

        // Safe pill visibility (currently all safe)
        // Could be toggled if unsafe facts are added later.
      }

      function showStatus(message, type = "info", timeout = 1800) {
        actionStatusEl.textContent = message;
        actionStatusEl.classList.remove(
          "text-red-500",
          "text-emerald-600",
          "text-gray-500"
        );
        if (type === "error") actionStatusEl.classList.add("text-red-500");
        else if (type === "success")
          actionStatusEl.classList.add("text-emerald-600");
        else actionStatusEl.classList.add("text-gray-500");

        if (timeout) {
          setTimeout(() => {
            if (actionStatusEl.textContent === message) {
              actionStatusEl.textContent = "";
            }
          }, timeout);
        }
      }

      function getCurrentFactText() {
        return factTextEl.textContent.trim();
      }

      // Favorites handling
      function loadFavorites() {
        try {
          const raw = localStorage.getItem("cd_random_fact_favorites");
          if (!raw) return [];
          const parsed = JSON.parse(raw);
          if (!Array.isArray(parsed)) return [];
          return parsed.filter((t) => typeof t === "string");
        } catch {
          return [];
        }
      }

      function saveFavorites() {
        try {
          localStorage.setItem(
            "cd_random_fact_favorites",
            JSON.stringify(favorites)
          );
        } catch {
          // ignore
        }
      }

      function renderFavorites() {
        favoritesListEl.innerHTML = "";
        if (!favorites.length) {
          favoritesEmptyEl.classList.remove("hidden");
          clearFavoritesBtn.classList.add("hidden");
          saveLabelEl.textContent = "Save to favorites";
          return;
        }
        favoritesEmptyEl.classList.add("hidden");
        clearFavoritesBtn.classList.remove("hidden");

        favorites.forEach((text, index) => {
          const item = document.createElement("div");
          item.className =
            "border border-gray-200 rounded-md p-2.5 bg-white flex items-start justify-between gap-2";
          const p = document.createElement("p");
          p.className = "text-gray-800 text-xs leading-snug";
          p.textContent = text;
          const btn = document.createElement("button");
          btn.type = "button";
          btn.className =
            "text-[11px] text-red-500 hover:underline flex-shrink-0 ml-2";
          btn.textContent = "Remove";
          btn.addEventListener("click", () => {
            favorites.splice(index, 1);
            saveFavorites();
            renderFavorites();
          });
          item.appendChild(p);
          item.appendChild(btn);
          favoritesListEl.appendChild(item);
        });

        const current = getCurrentFactText();
        if (favorites.includes(current)) {
          saveLabelEl.textContent = "Saved";
        } else {
          saveLabelEl.textContent = "Save to favorites";
        }
      }

      function toggleFavorite() {
        const text = getCurrentFactText();
        if (!text || text.startsWith("No facts match")) {
          showStatus("Generate a fact first.", "error");
          return;
        }
        const idx = favorites.indexOf(text);
        if (idx === -1) {
          favorites.unshift(text);
          showStatus("Saved to favorites.", "success");
        } else {
          favorites.splice(idx, 1);
          showStatus("Removed from favorites.", "info");
        }
        saveFavorites();
        renderFavorites();
      }

      // Event listeners
      categoryChips.forEach((chip) => {
        chip.addEventListener("click", () => {
          categoryChips.forEach((c) =>
            c.classList.remove(
              "active",
              "border-blue-500",
              "bg-blue-50",
              "text-blue-700"
            )
          );
          categoryChips.forEach((c) =>
            c.classList.add("border-gray-300", "text-gray-700")
          );
          chip.classList.add(
            "active",
            "border-blue-500",
            "bg-blue-50",
            "text-blue-700"
          );
          chip.classList.remove("border-gray-300", "text-gray-700");
          activeCategory = chip.dataset.category || "all";
          const fact = pickRandomFact();
          applyFactToUI(fact);
        });
      });

      lengthFilterEl.addEventListener("change", () => {
        const fact = pickRandomFact();
        applyFactToUI(fact);
      });

      safeModeToggleEl.addEventListener("change", () => {
        const fact = pickRandomFact();
        applyFactToUI(fact);
      });

      newFactBtn.addEventListener("click", () => {
        const fact = pickRandomFact();
        applyFactToUI(fact);
      });

      copyFactBtn.addEventListener("click", async () => {
        const text = getCurrentFactText();
        if (!text || text.startsWith("No facts match")) {
          showStatus("Nothing to copy yet.", "error");
          return;
        }
        try {
          await navigator.clipboard.writeText(text);
          showStatus("Fact copied to clipboard.", "success");
        } catch {
          showStatus(
            "Could not access clipboard. Please copy manually.",
            "error",
            3000
          );
        }
      });

      shareFactBtn.addEventListener("click", async () => {
        const text = getCurrentFactText();
        if (!text || text.startsWith("No facts match")) {
          showStatus("Generate a fact first.", "error");
          return;
        }
        const shareData = {
          title: "Random fact",
          text,
          url: window.location.href,
        };
        if (navigator.share) {
          try {
            await navigator.share(shareData);
            showStatus("Shared.", "success");
          } catch {
            // user cancelled or error
          }
        } else {
          try {
            await navigator.clipboard.writeText(
              text + " — " + window.location.href
            );
            showStatus(
              "Share not supported. Link copied instead.",
              "info",
              2600
            );
          } catch {
            showStatus("Sharing not supported in this browser.", "error", 2600);
          }
        }
      });

      saveFactBtn.addEventListener("click", toggleFavorite);

      clearFavoritesBtn.addEventListener("click", () => {
        if (!favorites.length) return;
        if (!confirm("Clear all saved facts from this browser?")) return;
        favorites = [];
        saveFavorites();
        renderFavorites();
        showStatus("Favorites cleared.", "info");
      });

      // Initialize
      favorites = loadFavorites();
      renderFavorites();
      // Ensure initial fact metadata is consistent with data
      applyFactToUI(FACTS[0]);
    </script>

