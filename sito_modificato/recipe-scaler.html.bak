<script>
  // Utility: parse quantity including simple fractions like "1 1/2" or "3/4"
  function parseQuantity(value) {
    if (!value) return NaN;
    value = String(value).trim();
    // Replace unicode fraction characters if needed (¼, ½, ¾)
    const fracMap = { '¼': '1/4', '½': '1/2', '¾': '3/4' };
    value = value.replace(/[¼½¾]/g, m => fracMap[m] || m);

    // Mixed number "1 1/2"
    const parts = value.split(' ');
    let total = 0;
    for (const part of parts) {
      if (!part) continue;
      if (part.includes('/')) {
        const [num, den] = part.split('/').map(Number);
        if (!isNaN(num) && !isNaN(den) && den !== 0) {
          total += num / den;
        }
      } else {
        const n = Number(part);
        if (!isNaN(n)) total += n;
      }
    }
    if (total === 0 && !value.includes('/')) {
      const n = Number(value);
      return isNaN(n) ? NaN : n;
    }
    return total;
  }

  function formatQuantity(value, roundingStep) {
    if (!isFinite(value)) return '';
    if (!roundingStep || roundingStep === 'none') return value.toString();

    const step = Number(roundingStep);
    if (step >= 1) {
      return Math.round(value / step) * step;
    }

    // For decimal steps like 0.1 or 0.01
    if (step === 0.1 || step === 0.01) {
      const decimals = step === 0.1 ? 1 : 2;
      return value.toFixed(decimals);
    }

    // For fractional steps like 0.25 or 0.5, convert to mixed fraction
    const rounded = Math.round(value / step) * step;
    const whole = Math.floor(rounded);
    let frac = rounded - whole;

    const denom = Math.round(1 / step);
    const num = Math.round(frac * denom);

    if (num === 0) return whole.toString();
    if (whole === 0) return num + '/' + denom;
    return whole + ' ' + num + '/' + denom;
  }

  // Simple unit conversion map (approximate, mostly volume)
  const unitGroups = {
    volume: ['tsp', 'tbsp', 'cup', 'ml'],
    weight: ['g', 'oz']
  };

  const unitToMl = {
    tsp: 5,
    tbsp: 15,
    cup: 240,
    ml: 1
  };

  const unitToG = {
    g: 1,
    oz: 28
  };

  function convertUnit(value, from, to) {
    if (!isFinite(value)) return NaN;
    if (from === to) return value;

    // Volume conversions
    if (unitGroups.volume.includes(from) && unitGroups.volume.includes(to)) {
      return value * (unitToMl[from] / unitToMl[to]);
    }

    // Weight conversions
    if (unitGroups.weight.includes(from) && unitGroups.weight.includes(to)) {
      return value * (unitToG[from] / unitToG[to]);
    }

    // Incompatible units (e.g., cup -> g) require density; skip
    return NaN;
  }

  const ingredientsBody = document.getElementById('ingredients-body');
  const originalServingsInput = document.getElementById('original-servings');
  const desiredServingsInput = document.getElementById('desired-servings');
  const scaleFactorInput = document.getElementById('scale-factor');
  const roundingModeSelect = document.getElementById('rounding-mode');

  function createIngredientRow(initial = {}) {
    const tr = document.createElement('tr');
    tr.className = 'ingredient-row';

    tr.innerHTML = `
      <td class="px-3 py-2 align-top">
        <input type="text" class="qty-input w-20 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-2 py-1 text-sm" placeholder="1, 1/2" value="${initial.qty || ''}">
      </td>
      <td class="px-3 py-2 align-top">
        <select class="unit-select w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-2 py-1 text-sm">
          <option value="">–</option>
          <optgroup label="Volume">
            <option value="tsp">tsp</option>
            <option value="tbsp">tbsp</option>
            <option value="cup">cup</option>
            <option value="ml">ml</option>
          </optgroup>
          <optgroup label="Weight">
            <option value="g">g</option>
            <option value="oz">oz</option>
          </optgroup>
          <optgroup label="Other">
            <option value="piece">piece</option>
          </optgroup>
        </select>
      </td>
      <td class="px-3 py-2 align-top">
        <input type="text" class="name-input w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-2 py-1 text-sm" placeholder="flour, sugar, eggs..." value="${initial.name || ''}">
      </td>
      <td class="px-3 py-2 align-top">
        <div class="scaled-qty text-sm text-gray-800 min-w-[3rem]"></div>
      </td>
      <td class="px-3 py-2 align-top">
        <div class="flex flex-col gap-1">
          <select class="convert-to w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-2 py-1 text-xs">
            <option value="">to unit…</option>
            <option value="tsp">tsp</option>
            <option value="tbsp">tbsp</option>
            <option value="cup">cup</option>
            <option value="ml">ml</option>
            <option value="g">g</option>
            <option value="oz">oz</option>
          </select>
          <div class="converted-qty text-xs text-gray-500"></div>
        </div>
      </td>
      <td class="px-3 py-2 align-top text-right">
        <button type="button" class="remove-row text-xs text-red-600 hover:text-red-800">Remove</button>
      </td>
    `;

    ingredientsBody.appendChild(tr);
    updateRow(tr);
  }

  function getScaleFactorFromServings() {
    const orig = parseFloat(originalServingsInput.value);
    const dest = parseFloat(desiredServingsInput.value);
    if (!isFinite(orig) || orig <= 0 || !isFinite(dest) || dest <= 0) return NaN;
    return dest / orig;
  }

  function syncScaleFactorFromServings() {
    const f = getScaleFactorFromServings();
    if (isFinite(f)) {
      scaleFactorInput.value = (Math.round(f * 100) / 100).toString();
    }
    updateAllRows();
  }

  function syncServingsFromScaleFactor() {
    const f = parseFloat(scaleFactorInput.value);
    const orig = parseFloat(originalServingsInput.value);
    if (isFinite(f) && isFinite(orig) && orig > 0) {
      desiredServingsInput.value = (orig * f).toFixed(2).replace(/\.00$/, '');
    }
    updateAllRows();
  }

  function updateRow(tr) {
    const qtyInput = tr.querySelector('.qty-input');
    const unitSelect = tr.querySelector('.unit-select');
    const scaledDiv = tr.querySelector('.scaled-qty');
    const convertTo = tr.querySelector('.convert-to');
    const convertedDiv = tr.querySelector('.converted-qty');

    const qty = parseQuantity(qtyInput.value);
    const factor = parseFloat(scaleFactorInput.value);
    const rounding = roundingModeSelect.value;

    if (!isFinite(qty) || !isFinite(factor)) {
      scaledDiv.textContent = '';
      convertedDiv.textContent = '';
      return;
    }

    const scaled = qty * factor;
    const formatted = formatQuantity(scaled, rounding);
    scaledDiv.textContent = formatted;

    // Conversion
    const fromUnit = unitSelect.value;
    const toUnit = convertTo.value;
    if (fromUnit && toUnit) {
      const numericScaled = parseFloat(scaled);
      const baseValue = isNaN(numericScaled) ? scaled : numericScaled;
      const converted = convertUnit(baseValue, fromUnit, toUnit);
      if (isFinite(converted)) {
        convertedDiv.textContent = formatQuantity(converted, rounding) + ' ' + toUnit;
      } else {
        convertedDiv.textContent = '–';
      }
    } else {
      convertedDiv.textContent = '';
    }
  }

  function updateAllRows() {
    document.querySelectorAll('.ingredient-row').forEach(updateRow);
  }

  // Event listeners
  document.getElementById('add-row-btn').addEventListener('click', () => {
    createIngredientRow();
  });

  document.getElementById('clear-all-btn').addEventListener('click', () => {
    ingredientsBody.innerHTML = '';
    createIngredientRow();
  });

  originalServingsInput.addEventListener('input', syncScaleFactorFromServings);
  desiredServingsInput.addEventListener('input', syncScaleFactorFromServings);
  scaleFactorInput.addEventListener('input', syncServingsFromScaleFactor);
  roundingModeSelect.addEventListener('change', updateAllRows);

  document.getElementById('swap-servings-btn').addEventListener('click', () => {
    const f = parseFloat(scaleFactorInput.value);
    if (!isFinite(f) || f === 0) return;
    const inv = 1 / f;
    scaleFactorInput.value = (Math.round(inv * 100) / 100).toString();
    syncServingsFromScaleFactor();
  });

  document.querySelectorAll('.quick-factor').forEach(btn => {
    btn.addEventListener('click', () => {
      const f = parseFloat(btn.dataset.quickFactor);
      if (!isFinite(f)) return;
      scaleFactorInput.value = f.toString();
      syncServingsFromScaleFactor();
    });
  });

  ingredientsBody.addEventListener('input', (e) => {
    if (e.target.closest('.ingredient-row')) {
      updateRow(e.target.closest('.ingredient-row'));
    }
  });

  ingredientsBody.addEventListener('change', (e) => {
    if (e.target.closest('.ingredient-row')) {
      updateRow(e.target.closest('.ingredient-row'));
    }
  });

  ingredientsBody.addEventListener('click', (e) => {
    if (e.target.classList.contains('remove-row')) {
      const row = e.target.closest('.ingredient-row');
      row.remove();
    }
  });

  // Initialize with a few example rows
  createIngredientRow({ qty: '2', name: 'eggs' });
  createIngredientRow({ qty: '1 1/2', name: 'cups flour' });
  createIngredientRow({ qty: '0.5', name: 'tsp salt' });

  // Mobile menu script (from template)
  document.getElementById('mobile-menu-toggle').addEventListener('click', function () {
    const menu = document.getElementById('mobile-menu');
    const expanded = this.getAttribute('aria-expanded') === 'true';
    this.setAttribute('aria-expanded', String(!expanded));
    menu.classList.toggle('hidden');
  });

  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
