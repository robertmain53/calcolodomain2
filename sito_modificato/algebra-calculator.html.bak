    <script>
      (function () {
        const modeSelect = document.getElementById('algebra-mode');
        const form = document.getElementById('algebra-form');
        const resetBtn = document.getElementById('algebra-reset');

        const linearFields = document.getElementById('linear-fields');
        const quadraticFields = document.getElementById('quadratic-fields');
        const systemFields = document.getElementById('system-fields');
        const polyFields = document.getElementById('poly-fields');

        const resultsBox = document.getElementById('algebra-results');
        const resultSummary = document.getElementById('result-summary');
        const resultDetails = document.getElementById('result-details');
        const resultSteps = document.getElementById('result-steps');

        function parseNum(value) {
          if (typeof value !== 'string') return NaN;
          const cleaned = value.trim().replace(',', '.');
          if (!cleaned) return NaN;
          const n = Number(cleaned);
          return Number.isFinite(n) ? n : NaN;
        }

        function fmt(val, digits = 6) {
          if (!Number.isFinite(val)) return '—';
          if (val === 0) return '0';
          const abs = Math.abs(val);
          if (abs >= 1e6 || abs < 1e-4) {
            return val.toExponential(4);
          }
          return Number(val.toPrecision(digits));
        }

        function clearResults() {
          resultsBox.classList.add('hidden');
          resultSummary.textContent = '';
          resultDetails.innerHTML = '';
          resultSteps.innerHTML = '';
        }

        function setModeVisibility() {
          const mode = modeSelect.value;
          clearResults();

          linearFields.classList.add('hidden');
          quadraticFields.classList.add('hidden');
          systemFields.classList.add('hidden');
          polyFields.classList.add('hidden');

          if (mode === 'linear') {
            linearFields.classList.remove('hidden');
          } else if (mode === 'quadratic') {
            quadraticFields.classList.remove('hidden');
          } else if (mode === 'system2') {
            systemFields.classList.remove('hidden');
          } else if (mode === 'poly-eval') {
            polyFields.classList.remove('hidden');
          }
        }

        function handleSubmit(evt) {
          evt.preventDefault();
          clearResults();
          const mode = modeSelect.value;
          const steps = [];

          if (mode === 'linear') {
            const a = parseNum(document.getElementById('linear-a').value);
            const b = parseNum(document.getElementById('linear-b').value);
            const c = parseNum(document.getElementById('linear-c').value);

            if (!Number.isFinite(a) || !Number.isFinite(b) || !Number.isFinite(c)) {
              alert('Please enter valid numeric values for a, b and c.');
              return;
            }

            steps.push('1. Start from the equation ax + b = c.');
            steps.push('2. Substitute a = ' + a + ', b = ' + b + ', c = ' + c + '.');

            if (a === 0) {
              if (b === c) {
                resultSummary.textContent = 'The equation has infinitely many solutions (any real x).';
                steps.push('3. When a = 0, the equation becomes b = c.');
                steps.push('4. Since b = c, any real x satisfies the equation.');
              } else {
                resultSummary.textContent = 'The equation has no solution (inconsistent).';
                steps.push('3. When a = 0, the equation becomes ' + b + ' = ' + c + '.');
                steps.push('4. Because b ≠ c, there is no value of x that satisfies the equation.');
              }
            } else {
              const num = c - b;
              const x = num / a;
              resultSummary.textContent = 'Unique solution: x = ' + fmt(x) + '.';

              const d1 = document.createElement('p');
              d1.textContent = 'Rewritten: ' + a + 'x + ' + b + ' = ' + c + '.';
              resultDetails.appendChild(d1);

              const d2 = document.createElement('p');
              d2.textContent = 'Solve: x = (c − b) / a = (' + c + ' − ' + b + ') / ' + a + ' = ' + fmt(x) + '.';
              resultDetails.appendChild(d2);

              steps.push('3. Subtract b from both sides: ax = c − b = ' + num + '.');
              steps.push('4. Divide both sides by a: x = (c − b) / a = ' + num + ' / ' + a + ' = ' + x + '.');
            }

          } else if (mode === 'quadratic') {
            const a = parseNum(document.getElementById('quad-a').value);
            const b = parseNum(document.getElementById('quad-b').value);
            const c = parseNum(document.getElementById('quad-c').value);

            if (!Number.isFinite(a) || !Number.isFinite(b) || !Number.isFinite(c)) {
              alert('Please enter valid numeric values for a, b and c.');
              return;
            }
            if (a === 0) {
              alert('For a quadratic equation, a must be non-zero.');
              return;
            }

            const discriminant = b * b - 4 * a * c;
            steps.push('1. Start from ax² + bx + c = 0 with a = ' + a + ', b = ' + b + ', c = ' + c + '.');
            steps.push('2. Compute the discriminant Δ = b² − 4ac = ' + b + '² − 4·' + a + '·' + c + ' = ' + discriminant + '.');

            const dP = document.createElement('p');
            dP.textContent = 'Discriminant Δ = ' + fmt(discriminant) + '.';
            resultDetails.appendChild(dP);

            if (discriminant > 0) {
              const sqrtD = Math.sqrt(discriminant);
              const x1 = (-b + sqrtD) / (2 * a);
              const x2 = (-b - sqrtD) / (2 * a);
              resultSummary.textContent = 'Two distinct real roots: x₁ = ' + fmt(x1) + ', x₂ = ' + fmt(x2) + '.';

              const d2 = document.createElement('p');
              d2.textContent = 'x₁ = (−b + √Δ) / (2a) = ' + fmt(x1) + ', x₂ = (−b − √Δ) / (2a) = ' + fmt(x2) + '.';
              resultDetails.appendChild(d2);

              steps.push('3. Since Δ > 0, there are two distinct real roots.');
              steps.push('4. x₁ = (−b + √Δ) / (2a) = ' + x1 + '.');
              steps.push('5. x₂ = (−b − √Δ) / (2a) = ' + x2 + '.');
            } else if (discriminant === 0) {
              const x = -b / (2 * a);
              resultSummary.textContent = 'One real root with multiplicity 2: x = ' + fmt(x) + '.';

              const d2 = document.createElement('p');
              d2.textContent = 'x = −b / (2a) = ' + fmt(x) + '.';
              resultDetails.appendChild(d2);

              steps.push('3. Since Δ = 0, there is one repeated real root.');
              steps.push('4. x = −b / (2a) = ' + x + '.');
            } else {
              const sqrtAbs = Math.sqrt(-discriminant);
              const realPart = -b / (2 * a);
              const imagPart = sqrtAbs / (2 * a);
              resultSummary.textContent = 'Two complex conjugate roots: x = ' + fmt(realPart) + ' ± ' + fmt(imagPart) + 'i.';

              const d2 = document.createElement('p');
              d2.textContent = 'x₁ = ' + fmt(realPart) + ' + ' + fmt(imagPart) + 'i, x₂ = ' + fmt(realPart) + ' − ' + fmt(imagPart) + 'i.';
              resultDetails.appendChild(d2);

              steps.push('3. Since Δ < 0, the roots are complex.');
              steps.push('4. Write Δ = −|Δ| and compute √|Δ| = ' + sqrtAbs + '.');
              steps.push('5. x = (−b ± i√|Δ|) / (2a) = ' + realPart + ' ± ' + imagPart + 'i.');
            }

          } else if (mode === 'system2') {
            const a1 = parseNum(document.getElementById('sys-a1').value);
            const b1 = parseNum(document.getElementById('sys-b1').value);
            const c1 = parseNum(document.getElementById('sys-c1').value);
            const a2 = parseNum(document.getElementById('sys-a2').value);
            const b2 = parseNum(document.getElementById('sys-b2').value);
            const c2 = parseNum(document.getElementById('sys-c2').value);

            if (
              !Number.isFinite(a1) || !Number.isFinite(b1) || !Number.isFinite(c1) ||
              !Number.isFinite(a2) || !Number.isFinite(b2) || !Number.isFinite(c2)
            ) {
              alert('Please enter valid numeric values for all coefficients of the system.');
              return;
            }

            const D = a1 * b2 - a2 * b1;
            steps.push('1. System: a₁x + b₁y = c₁ and a₂x + b₂y = c₂.');
            steps.push('2. Compute the determinant D = a₁b₂ − a₂b₁ = ' + D + '.');

            const dD = document.createElement('p');
            dD.textContent = 'Determinant D = ' + fmt(D) + '.';
            resultDetails.appendChild(dD);

            if (D !== 0) {
              const Dx = c1 * b2 - c2 * b1;
              const Dy = a1 * c2 - a2 * c1;
              const x = Dx / D;
              const y = Dy / D;

              resultSummary.textContent = 'Unique solution: x = ' + fmt(x) + ', y = ' + fmt(y) + '.';

              const d2 = document.createElement('p');
              d2.textContent = 'x = (c₁b₂ − c₂b₁) / D = ' + fmt(Dx) + ' / ' + fmt(D) + ' = ' + fmt(x) + '.';
              const d3 = document.createElement('p');
              d3.textContent = 'y = (a₁c₂ − a₂c₁) / D = ' + fmt(Dy) + ' / ' + fmt(D) + ' = ' + fmt(y) + '.';
              resultDetails.appendChild(d2);
              resultDetails.appendChild(d3);

              steps.push('3. Compute Dx = c₁b₂ − c₂b₁ = ' + Dx + ' and Dy = a₁c₂ − a₂c₁ = ' + Dy + '.');
              steps.push('4. Then x = Dx / D = ' + x + ', y = Dy / D = ' + y + '.');
            } else {
              // D == 0: check proportionality for special cases
              const same1 = (a1 === 0 && a2 === 0) || (a2 !== 0 && a1 / a2 === b1 / b2);
              const same2 = (a1 === 0 && a2 === 0) || (a2 !== 0 && a1 / a2 === c1 / c2);

              if (same1 && same2) {
                resultSummary.textContent = 'Infinitely many solutions: the two equations represent the same line.';
                steps.push('3. Because D = 0 and the ratios of coefficients are equal, the equations are dependent.');
                steps.push('4. The system represents the same line; there are infinitely many solutions.');
              } else {
                resultSummary.textContent = 'No solution: the system is inconsistent (parallel lines).';
                steps.push('3. Because D = 0 but the constant terms are not in the same ratio, the lines are parallel and distinct.');
                steps.push('4. Therefore the system has no solution.');
              }
            }

          } else if (mode === 'poly-eval') {
            const a4 = parseNum(document.getElementById('poly-a4').value) || 0;
            const a3 = parseNum(document.getElementById('poly-a3').value) || 0;
            const a2 = parseNum(document.getElementById('poly-a2').value) || 0;
            const a1 = parseNum(document.getElementById('poly-a1').value) || 0;
            const a0 = parseNum(document.getElementById('poly-a0').value) || 0;
            const x = parseNum(document.getElementById('poly-x').value);

            if (!Number.isFinite(x)) {
              alert('Please enter a valid numeric value for x.');
              return;
            }

            steps.push('1. Polynomial P(x) = a₄x⁴ + a₃x³ + a₂x² + a₁x + a₀.');
            steps.push('2. Coefficients: a₄ = ' + a4 + ', a₃ = ' + a3 + ', a₂ = ' + a2 + ', a₁ = ' + a1 + ', a₀ = ' + a0 + '.');
            steps.push('3. Evaluate at x = ' + x + ' using Horner’s method.');

            // Horner
            let acc = a4;
            steps.push('   Start: acc = a₄ = ' + acc + '.');
            acc = acc * x + a3;
            steps.push('   Step 1: acc = acc·x + a₃ = ' + acc + '.');
            acc = acc * x + a2;
            steps.push('   Step 2: acc = acc·x + a₂ = ' + acc + '.');
            acc = acc * x + a1;
            steps.push('   Step 3: acc = acc·x + a₁ = ' + acc + '.');
            acc = acc * x + a0;
            steps.push('   Step 4: acc = acc·x + a₀ = ' + acc + '.');

            const P = acc;
            resultSummary.textContent = 'Polynomial value: P(' + fmt(x) + ') = ' + fmt(P) + '.';

            const d1 = document.createElement('p');
            d1.textContent = 'Using Horner’s method, the evaluated value is P(' + fmt(x) + ') = ' + fmt(P) + '.';
            resultDetails.appendChild(d1);
          }

          // Render step-by-step
          steps.forEach(function (line) {
            const p = document.createElement('p');
            p.textContent = line;
            resultSteps.appendChild(p);
          });

          resultsBox.classList.remove('hidden');
        }

        function handleReset() {
          form.reset();
          clearResults();
          setModeVisibility();
        }

        modeSelect.addEventListener('change', setModeVisibility);
        form.addEventListener('submit', handleSubmit);
        resetBtn.addEventListener('click', handleReset);

        setModeVisibility();
      })();
    </script>


