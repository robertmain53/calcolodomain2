    <script>
      // Helper: format currency
      function formatEuro(value) {
        if (!isFinite(value)) return "€0";
        return new Intl.NumberFormat("de-DE", {
          style: "currency",
          currency: "EUR",
          maximumFractionDigits: 2,
        }).format(value);
      }

      function parseInput(id) {
        const v = parseFloat(
          document.getElementById(id).value.replace(",", ".")
        );
        return isNaN(v) ? 0 : v;
      }

      function updateAllowanceVisibility() {
        const sel = document.getElementById("allowance");
        const custom = document.getElementById("allowanceCustom");
        if (sel.value === "custom") {
          custom.classList.remove("hidden");
        } else {
          custom.classList.add("hidden");
        }
      }

      document
        .getElementById("allowance")
        .addEventListener("change", updateAllowanceVisibility);

      document.getElementById("calcBtn").addEventListener("click", function () {
        const gainsShares = parseInput("gainsShares");
        const gainsOther = parseInput("gainsOther");
        const gainsCrypto = parseInput("gainsCrypto");
        const lossShares = parseInput("lossShares");
        const lossOther = parseInput("lossOther");

        const allowanceSel = document.getElementById("allowance").value;
        let allowance;
        if (allowanceSel === "custom") {
          allowance = Math.max(0, parseInput("allowanceCustom"));
        } else {
          allowance = parseFloat(allowanceSel);
        }

        const churchSel = document.getElementById("churchTax").value;
        const churchRate =
          churchSel === "none" ? 0 : parseFloat(churchSel) / 100;

        const personalRateInput = parseFloat(
          document.getElementById("personalRate").value.replace(",", ".")
        );
        const personalRate = isNaN(personalRateInput)
          ? null
          : Math.max(0, personalRateInput) / 100;

        const grossIncome = gainsShares + gainsOther + gainsCrypto;
        const totalLosses = Math.min(
          grossIncome,
          Math.max(0, lossShares + lossOther)
        );

        let taxableBeforeAllowance = grossIncome - totalLosses;
        if (taxableBeforeAllowance < 0) taxableBeforeAllowance = 0;

        const allowanceUsed = Math.min(allowance, taxableBeforeAllowance);
        const taxableIncome = Math.max(
          0,
          taxableBeforeAllowance - allowanceUsed
        );

        const baseTax = taxableIncome * 0.25;
        const soli = baseTax * 0.055;
        const churchTax = baseTax * churchRate;
        const totalTax = baseTax + soli + churchTax;
        const netIncome = grossIncome - totalTax;

        const effectiveRate =
          grossIncome > 0 ? (totalTax / grossIncome) * 100 : 0;

        document.getElementById("resTaxableIncome").textContent =
          formatEuro(taxableIncome);
        document.getElementById("resTotalTax").textContent =
          formatEuro(totalTax);
        document.getElementById("resEffectiveRate").textContent =
          effectiveRate.toFixed(2) + "%";

        document.getElementById("resGrossIncome").textContent =
          formatEuro(grossIncome);
        document.getElementById("resLossesUsed").textContent =
          formatEuro(totalLosses);
        document.getElementById("resAllowanceUsed").textContent =
          formatEuro(allowanceUsed);
        document.getElementById("resBaseTax").textContent = formatEuro(baseTax);
        document.getElementById("resSoli").textContent = formatEuro(soli);
        document.getElementById("resChurch").textContent =
          formatEuro(churchTax);
        document.getElementById("resNetIncome").textContent =
          formatEuro(netIncome);

        const personalBox = document.getElementById("personalComparison");
        if (personalRate !== null && taxableIncome > 0) {
          const personalTax = taxableIncome * personalRate;
          document.getElementById("resPersonalTax").textContent =
            formatEuro(personalTax);
          document.getElementById("resPersonalRateEff").textContent =
            (personalRate * 100).toFixed(2) + "%";

          let msg;
          if (personalTax < totalTax) {
            msg =
              "Your estimated personal income tax on this investment income is lower than the flat Abgeltungsteuer. It may be worth requesting the “Günstigerprüfung” in your tax return.";
          } else if (personalTax > totalTax) {
            msg =
              "The flat Abgeltungsteuer appears more favorable than your personal income tax rate for this income.";
          } else {
            msg =
              "Your personal income tax rate and the flat Abgeltungsteuer lead to roughly the same tax on this income.";
          }
          document.getElementById("resWhichBetter").textContent = msg;
          personalBox.classList.remove("hidden");
        } else {
          personalBox.classList.add("hidden");
        }
      });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          [
            "gainsShares",
            "gainsOther",
            "gainsCrypto",
            "lossShares",
            "lossOther",
            "allowanceCustom",
            "personalRate",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("allowance").value = "1000";
          updateAllowanceVisibility();
          document.getElementById("churchTax").value = "none";
          document.getElementById("yearSelect").value = "2025";

          document.getElementById("resTaxableIncome").textContent = "€0";
          document.getElementById("resTotalTax").textContent = "€0";
          document.getElementById("resEffectiveRate").textContent = "0%";
          document.getElementById("resGrossIncome").textContent = "€0";
          document.getElementById("resLossesUsed").textContent = "€0";
          document.getElementById("resAllowanceUsed").textContent = "€0";
          document.getElementById("resBaseTax").textContent = "€0";
          document.getElementById("resSoli").textContent = "€0";
          document.getElementById("resChurch").textContent = "€0";
          document.getElementById("resNetIncome").textContent = "€0";
          document.getElementById("personalComparison").classList.add("hidden");
        });

      // Initialize allowance visibility
      updateAllowanceVisibility();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
