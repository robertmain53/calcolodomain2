    <script>
      // Minimal CPI-U annual index data (example values; should be replaced/extended with full official series)
      // Values are index levels (e.g., 1982-84=100 base). These are illustrative; update from BLS for production.
      const CPI_DATA = {
        1980: 82.4,
        1985: 107.6,
        1990: 130.7,
        1995: 152.4,
        2000: 172.2,
        2005: 195.3,
        2010: 218.1,
        2015: 237.0,
        2016: 240.0,
        2017: 245.1,
        2018: 251.1,
        2019: 255.7,
        2020: 258.8,
        2021: 271.0,
        2022: 292.7,
        2023: 305.0,
      };

      const CPI_YEARS = Object.keys(CPI_DATA)
        .map((y) => parseInt(y, 10))
        .sort((a, b) => a - b);

      function populateYearSelects() {
        const fromSelect = document.getElementById("from-year");
        const toSelect = document.getElementById("to-year");
        fromSelect.innerHTML = "";
        toSelect.innerHTML = "";

        CPI_YEARS.forEach((year) => {
          const opt1 = document.createElement("option");
          opt1.value = year;
          opt1.textContent = year;
          fromSelect.appendChild(opt1);

          const opt2 = document.createElement("option");
          opt2.value = year;
          opt2.textContent = year;
          toSelect.appendChild(opt2);
        });

        // Sensible defaults: from 2000 to latest
        fromSelect.value = 2000;
        toSelect.value = CPI_YEARS[CPI_YEARS.length - 1];
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "-";
        const abs = Math.abs(value);
        const decimals = abs >= 1000 ? 0 : 2;
        return (
          "$" + value.toFixed(decimals).replace(/\B(?=(\d{3})+(?!\d))/g, ",")
        );
      }

      function formatPercent(value, decimals = 2) {
        if (!isFinite(value)) return "-";
        return value.toFixed(decimals) + "%";
      }

      function calculateInflation() {
        const amountInput = document.getElementById("amount");
        const fromYear = parseInt(
          document.getElementById("from-year").value,
          10
        );
        const toYear = parseInt(document.getElementById("to-year").value, 10);
        const showRealReturn =
          document.getElementById("show-real-return").checked;

        const amount = parseFloat(amountInput.value);
        if (isNaN(amount) || amount < 0) {
          alert("Please enter a valid non-negative amount.");
          amountInput.focus();
          return;
        }

        const cpiFrom = CPI_DATA[fromYear];
        const cpiTo = CPI_DATA[toYear];
        if (!cpiFrom || !cpiTo) {
          alert("CPI data not available for the selected years.");
          return;
        }

        const adjustedAmount = amount * (cpiTo / cpiFrom);
        const cumulativeInflation = cpiTo / cpiFrom - 1;
        const yearDiff = Math.abs(toYear - fromYear);
        const avgAnnualInflation =
          yearDiff > 0 ? Math.pow(cpiTo / cpiFrom, 1 / yearDiff) - 1 : 0;

        const resultsCard = document.getElementById("results-card");
        const resultMain = document.getElementById("result-main");
        const resultSub = document.getElementById("result-sub");
        const resultCumulative = document.getElementById("result-cumulative");
        const resultAvg = document.getElementById("result-avg");
        const resultBuyingPower = document.getElementById(
          "result-buying-power"
        );

        const direction =
          toYear > fromYear ? "in" : toYear < fromYear ? "in" : "in";
        resultMain.textContent = `${formatCurrency(
          amount
        )} in ${fromYear} is roughly equivalent to ${formatCurrency(
          adjustedAmount
        )} in ${toYear}.`;

        if (toYear > fromYear) {
          resultSub.textContent = `Prices increased by about ${formatPercent(
            cumulativeInflation * 100
          )} between ${fromYear} and ${toYear}.`;
        } else if (toYear < fromYear) {
          resultSub.textContent = `Prices were about ${formatPercent(
            (1 / (1 + cumulativeInflation) - 1) * 100,
            2
          )} lower in ${toYear} than in ${fromYear}.`;
        } else {
          resultSub.textContent =
            "Same year selected – no inflation adjustment needed.";
        }

        resultCumulative.textContent = formatPercent(
          cumulativeInflation * 100,
          2
        );
        resultAvg.textContent =
          yearDiff > 0 ? formatPercent(avgAnnualInflation * 100, 2) : "0.00%";

        const buyingPowerChange = 1 / (1 + cumulativeInflation) - 1;
        resultBuyingPower.textContent =
          toYear > fromYear
            ? `${formatPercent(-buyingPowerChange * 100, 2)} less buying power`
            : `${formatPercent(buyingPowerChange * 100, 2)} more buying power`;

        resultsCard.classList.remove("hidden");

        // Real return helper (user must mentally supply nominal return)
        const realReturnRow = document.getElementById("real-return-row");
        if (showRealReturn && yearDiff > 0) {
          const realReturnValue = document.getElementById("real-return-value");
          const realReturnNote = document.getElementById("real-return-note");
          realReturnValue.textContent = `≈ nominal return − ${formatPercent(
            avgAnnualInflation * 100,
            2
          )} inflation`;
          realReturnNote.textContent =
            "Example: if your portfolio returned 7% per year over this period, your approximate real return would be 7% − " +
            formatPercent(avgAnnualInflation * 100, 2) +
            " ≈ " +
            formatPercent(7 - avgAnnualInflation * 100, 2) +
            ".";
          realReturnRow.classList.remove("hidden");
        } else {
          realReturnRow.classList.add("hidden");
        }

        drawCpiChart(fromYear, toYear);
      }

      function drawCpiChart(fromYear, toYear) {
        const chartContainer = document.getElementById("chart-container");
        const line = document.getElementById("cpi-chart-line");

        const start = Math.min(fromYear, toYear);
        const end = Math.max(fromYear, toYear);
        const years = [];
        const values = [];

        for (let y = start; y <= end; y++) {
          if (CPI_DATA[y]) {
            years.push(y);
            values.push(CPI_DATA[y]);
          }
        }

        if (years.length < 2) {
          chartContainer.classList.add("hidden");
          return;
        }

        const minVal = Math.min(...values);
        const maxVal = Math.max(...values);
        const range = maxVal - minVal || 1;

        const points = values
          .map((v, idx) => {
            const x = (idx / (values.length - 1)) * 100;
            const norm = (v - minVal) / range;
            const y = 40 - norm * 30 - 5; // padding top/bottom
            return `${x.toFixed(2)},${y.toFixed(2)}`;
          })
          .join(" ");

        line.setAttribute("points", points);
        chartContainer.classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateYearSelects();
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateInflation);
        document
          .getElementById("swap-years-btn")
          .addEventListener("click", () => {
            const fromSelect = document.getElementById("from-year");
            const toSelect = document.getElementById("to-year");
            const tmp = fromSelect.value;
            fromSelect.value = toSelect.value;
            toSelect.value = tmp;
            calculateInflation();
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
