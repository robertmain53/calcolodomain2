      function formatMoney(value) {
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        return (value * 100).toFixed(1) + "%";
      }

      function calcFederalTax(year, filingStatus, taxableIncome) {
        if (taxableIncome <= 0) return 0;
        const params = FED_PARAMS[year];
        const brackets = params.brackets[filingStatus];
        let remaining = taxableIncome;
        let lastLimit = 0;
        let tax = 0;
        for (const bracket of brackets) {
          const span = Math.min(remaining, bracket.upTo - lastLimit);
          if (span <= 0) break;
          tax += span * bracket.rate;
          remaining -= span;
          lastLimit = bracket.upTo;
          if (remaining <= 0) break;
        }
        return tax;
      }

      function getPeriods(freq) {
        switch (freq) {
          case "monthly":
            return 12;
          case "biweekly":
            return 26;
          case "weekly":
            return 52;
          default:
            return 1;
        }
      }

      function updatePerPeriodHeader() {
        const freq = document.getElementById("pay-frequency").value;
        const header = document.getElementById("per-period-header");
        const map = {
          annual: "Per year",
          monthly: "Per month",
          biweekly: "Per 2-week paycheck",
          weekly: "Per week",
        };
        header.textContent = map[freq] || "Per pay period";
      }

      document
        .getElementById("pay-frequency")
        .addEventListener("change", updatePerPeriodHeader);

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const year = parseInt(document.getElementById("tax-year").value, 10);
        const filingStatus = document.getElementById("filing-status").value;
        const income = parseFloat(
          document.getElementById("annual-income").value
        );
        const pretax =
          parseFloat(document.getElementById("pretax-deductions").value) || 0;
        const extraNcDed =
          parseFloat(document.getElementById("additional-deductions").value) ||
          0;
        const freq = document.getElementById("pay-frequency").value;
        const includeFederal =
          document.querySelector('input[name="include-federal"]:checked')
            .value === "yes";

        const errorEl = document.getElementById("calc-error");
        if (isNaN(income) || income < 0) {
          errorEl.classList.remove("hidden");
          document.getElementById("results-section").classList.add("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const ncParams = NC_PARAMS[year];
        const fedParams = FED_PARAMS[year];

        const adjIncome = Math.max(0, income - pretax);

        const ncStd = ncParams.standardDeduction[filingStatus] || 0;
        const ncTaxable = Math.max(0, adjIncome - ncStd - extraNcDed);
        const ncTax = ncTaxable * ncParams.rate;

        let federalTax = 0;
        if (includeFederal) {
          const fedStd = fedParams.standardDeduction[filingStatus] || 0;
          const fedTaxable = Math.max(0, adjIncome - fedStd);
          federalTax = calcFederalTax(year, filingStatus, fedTaxable);
        }

        const totalTax = ncTax + federalTax;
        const netIncome = income - pretax - totalTax;

        const periods = getPeriods(freq);

        document.getElementById("nc-tax-output").textContent =
          formatMoney(ncTax);
        const ncEffRate = income > 0 ? ncTax / income : 0;
        document.getElementById("nc-effective-rate").textContent =
          formatPercent(ncEffRate);

        document.getElementById("takehome-output").textContent =
          formatMoney(netIncome);
        document.getElementById("total-tax-output").textContent =
          formatMoney(totalTax);

        document.getElementById("gross-annual-cell").textContent =
          formatMoney(income);
        document.getElementById("gross-period-cell").textContent = formatMoney(
          income / periods
        );

        document.getElementById("pretax-annual-cell").textContent =
          formatMoney(pretax);
        document.getElementById("pretax-period-cell").textContent = formatMoney(
          pretax / periods
        );

        document.getElementById("federal-annual-cell").textContent =
          formatMoney(federalTax);
        document.getElementById("federal-period-cell").textContent =
          formatMoney(federalTax / periods);

        document.getElementById("nc-annual-cell").textContent =
          formatMoney(ncTax);
        document.getElementById("nc-period-cell").textContent = formatMoney(
          ncTax / periods
        );

        document.getElementById("net-annual-cell").textContent =
          formatMoney(netIncome);
        document.getElementById("net-period-cell").textContent = formatMoney(
          netIncome / periods
        );

        updatePerPeriodHeader();
        document.getElementById("results-section").classList.remove("hidden");
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("nc-tax-form").reset();
        document.getElementById("results-section").classList.add("hidden");
        document.getElementById("calc-error").classList.add("hidden");
        updatePerPeriodHeader();
      });

      // Initialize header label
      updatePerPeriodHeader();

