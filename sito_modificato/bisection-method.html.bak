    <script>
      // ----- Utility: parse number with support for 1e-6, commas etc. -----
      function bisectParseNumber(str, name) {
        if (str == null) throw new Error("Missing value for " + name + ".");
        const cleaned = String(str).trim().replace(",", ".");
        if (cleaned === "") throw new Error("Missing value for " + name + ".");
        const val = Number(cleaned);
        if (!Number.isFinite(val)) {
          throw new Error(
            "Invalid numeric value for " + name + ': "' + str + '".'
          );
        }
        return val;
      }

      // Create f(x) from string using Math functions and ^ to ** conversion
      function bisectBuildFunction(expr) {
        if (!expr || !expr.trim()) {
          throw new Error("Please enter a function f(x).");
        }
        let safeExpr = expr.trim();
        // Replace ^ with ** for exponentiation
        safeExpr = safeExpr.replace(/\^/g, "**");
        try {
          // Use "with (Math)" to allow sin, cos, etc. without Math.
          // x is the variable, Math is in scope.
          // eslint-disable-next-line no-new-func
          const fn = new Function(
            "x",
            "with (Math) { return " + safeExpr + "; }"
          );
          // Test evaluation at a simple value
          const testVal = fn(0);
          if (!Number.isFinite(testVal)) {
            // Not necessarily an error, but we know it runs
          }
          return fn;
        } catch (e) {
          throw new Error("Unable to parse f(x). Please check your syntax.");
        }
      }

      // Run bisection; returns result object with iterations
      function runBisection(f, a0, b0, tol, maxIter) {
        const iterations = [];
        let a = a0;
        let b = b0;
        let fa = f(a);
        let fb = f(b);

        if (!Number.isFinite(fa) || !Number.isFinite(fb)) {
          throw new Error(
            "f(a) or f(b) is not finite. Please check your function and interval."
          );
        }

        if (fa * fb > 0) {
          throw new Error(
            "f(a) and f(b) must have opposite signs (f(a)*f(b) < 0) for the bisection method to apply."
          );
        }

        const L0 = Math.abs(b0 - a0);
        const Nbound = Math.log2(L0 / tol);
        let stopReason = "";

        let root = null;
        let froot = null;
        let halfLen = null;
        let k = 0;

        for (k = 1; k <= maxIter; k++) {
          const m = 0.5 * (a + b);
          const fm = f(m);
          if (!Number.isFinite(fm)) {
            throw new Error("f(x) is not finite at x = " + m + ".");
          }

          halfLen = 0.5 * (b - a);
          iterations.push({
            k,
            a,
            b,
            m,
            fa,
            fm,
            fb,
            halfLen: Math.abs(halfLen),
          });

          const absFm = Math.abs(fm);
          const absHalf = Math.abs(halfLen);

          // Stopping criteria
          if (absFm <= tol) {
            stopReason = "|f(m)| <= tolerance";
            root = m;
            froot = fm;
            break;
          }
          if (absHalf <= tol) {
            stopReason = "interval half-length <= tolerance";
            root = m;
            froot = fm;
            break;
          }

          // Update interval while preserving sign change
          if (fa * fm < 0) {
            b = m;
            fb = fm;
          } else {
            a = m;
            fa = fm;
          }
        }

        if (root === null) {
          // Did not meet criteria within max iterations
          const m = 0.5 * (a + b);
          const fm = f(m);
          root = m;
          froot = fm;
          halfLen = 0.5 * (b - a);
          stopReason = "maximum iterations reached before tolerance";
        }

        return {
          iterations,
          root,
          froot,
          finalA: a,
          finalB: b,
          halfLen: Math.abs(halfLen),
          maxIter,
          usedIter: iterations.length,
          theoryBound: Nbound,
          stopReason,
        };
      }

      (function () {
        const fxEl = document.getElementById("bisect-fx");
        const aEl = document.getElementById("bisect-a");
        const bEl = document.getElementById("bisect-b");
        const tolEl = document.getElementById("bisect-tol");
        const maxIterEl = document.getElementById("bisect-maxiter");
        const decimalsEl = document.getElementById("bisect-decimals");
        const errorEl = document.getElementById("bisect-error");
        const resultsSection = document.getElementById(
          "bisect-results-section"
        );
        const tableBody = document.getElementById("bisect-table-body");

        const rootEl = document.getElementById("bisect-root");
        const frootEl = document.getElementById("bisect-froot");
        const intervalEl = document.getElementById("bisect-interval");
        const halfEl = document.getElementById("bisect-half");
        const itersEl = document.getElementById("bisect-iters");
        const itersMaxEl = document.getElementById("bisect-iters-max");
        const theoryEl = document.getElementById("bisect-theory");
        const stopReasonEl = document.getElementById("bisect-stop-reason");

        function clearOutput() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
          resultsSection.classList.add("hidden");
          tableBody.innerHTML = "";
        }

        document
          .getElementById("bisect-run-btn")
          .addEventListener("click", function () {
            clearOutput();
            try {
              const expr = fxEl.value;
              const f = bisectBuildFunction(expr);

              const a = bisectParseNumber(aEl.value, "a");
              const b = bisectParseNumber(bEl.value, "b");
              if (a === b) throw new Error("a and b must be different.");
              if (a > b) {
                // Swap to ensure a < b
                const tmp = aEl.value;
                aEl.value = b;
                bEl.value = a;
              }

              const aNum = bisectParseNumber(aEl.value, "a");
              const bNum = bisectParseNumber(bEl.value, "b");
              let tol = bisectParseNumber(tolEl.value, "tolerance");
              if (tol <= 0) throw new Error("Tolerance must be positive.");
              const maxIterRaw = Number(maxIterEl.value);
              if (!Number.isFinite(maxIterRaw) || maxIterRaw <= 0) {
                throw new Error("Max iterations must be a positive integer.");
              }
              const maxIter = Math.min(
                500,
                Math.max(1, Math.round(maxIterRaw))
              );
              maxIterEl.value = maxIter;
              let decimals = Number(decimalsEl.value);
              if (!Number.isFinite(decimals)) decimals = 6;
              decimals = Math.max(0, Math.min(10, Math.round(decimals)));
              decimalsEl.value = decimals;

              const result = runBisection(f, aNum, bNum, tol, maxIter);

              function fmt(x) {
                return Number.isFinite(x) ? x.toFixed(decimals) : "NaN";
              }

              rootEl.textContent = fmt(result.root);
              frootEl.textContent = fmt(result.froot);
              intervalEl.textContent =
                "[" + fmt(result.finalA) + ", " + fmt(result.finalB) + "]";
              halfEl.textContent = fmt(result.halfLen);
              itersEl.textContent = result.usedIter;
              itersMaxEl.textContent = result.maxIter;

              const L0 = Math.abs(bNum - aNum);
              const bound = result.theoryBound;
              const boundCeil = Math.ceil(bound);
              if (L0 > 0 && Number.isFinite(bound)) {
                theoryEl.textContent =
                  "Initial interval length L0 = " +
                  L0.toExponential(3) +
                  ". To achieve interval length ≤ " +
                  tol.toExponential(3) +
                  ", you need at most N = ceil(log2(L0 / ε)) = " +
                  boundCeil +
                  " iterations.";
              } else {
                theoryEl.textContent =
                  "Theoretical iteration bound could not be computed due to invalid interval length.";
              }

              stopReasonEl.textContent =
                "Stopping reason: " + result.stopReason + ".";

              // Fill iteration table
              tableBody.innerHTML = "";
              for (const row of result.iterations) {
                const tr = document.createElement("tr");
                const cells = [
                  row.k,
                  fmt(row.a),
                  fmt(row.b),
                  fmt(row.m),
                  fmt(row.fa),
                  fmt(row.fm),
                  fmt(row.fb),
                  fmt(row.halfLen),
                ];
                cells.forEach((val, idx) => {
                  const td = document.createElement("td");
                  td.textContent = val;
                  if (idx === 0) {
                    td.style.textAlign = "center";
                  } else {
                    td.style.textAlign = "right";
                  }
                  tr.appendChild(td);
                });
                tableBody.appendChild(tr);
              }

              resultsSection.classList.remove("hidden");
            } catch (err) {
              errorEl.textContent =
                err.message ||
                "Unable to run the bisection method. Please check your inputs.";
              errorEl.classList.remove("hidden");
            }
          });

        document
          .getElementById("bisect-clear-btn")
          .addEventListener("click", function () {
            tableBody.innerHTML = "";
            resultsSection.classList.add("hidden");
            errorEl.classList.add("hidden");
            errorEl.textContent = "";
          });

        document
          .getElementById("bisect-copy-btn")
          .addEventListener("click", function () {
            if (!tableBody.children.length) return;
            let csv = "k,a,b,m,f(a),f(m),f(b),(b-a)/2\n";
            for (const tr of tableBody.children) {
              const cells = Array.from(tr.querySelectorAll("td")).map((td) =>
                td.textContent.trim()
              );
              csv += cells.join(",") + "\n";
            }
            if (navigator.clipboard && navigator.clipboard.writeText) {
              navigator.clipboard.writeText(csv).catch(function () {});
            }
          });
      })();
    </script>

