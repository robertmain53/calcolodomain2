    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = document.querySelectorAll(".tab-panel");
      function activateTab(id) {
        tabButtons.forEach((btn) => {
          if (btn.dataset.tab === id) {
            btn.classList.add("tab-active", "border-blue-600", "text-blue-700");
          } else {
            btn.classList.remove(
              "tab-active",
              "border-blue-600",
              "text-blue-700"
            );
          }
        });
        tabPanels.forEach((panel) => {
          panel.classList.toggle("hidden", panel.id !== id);
        });
      }
      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => activateTab(btn.dataset.tab));
      });
      // default tab
      activateTab("tab-basic");

      // Unit helpers
      function ftToM(ft) {
        return ft * 0.3048;
      }
      function mToFt(m) {
        return m / 0.3048;
      }
      function formatLength(value, units) {
        if (isNaN(value)) return "–";
        return value.toFixed(2) + " " + units;
      }

      // BASIC PERIMETER CALC
      document.getElementById("basic-calc").addEventListener("click", () => {
        const unit = document.getElementById("basic-units").value;
        const waste =
          parseFloat(document.getElementById("basic-waste").value) || 0;
        const walls = Array.from(document.querySelectorAll(".basic-wall"))
          .map((i) => parseFloat(i.value))
          .filter((v) => !isNaN(v) && v > 0);
        const stickLen =
          parseFloat(document.getElementById("basic-stick-length").value) || 0;

        if (!walls.length) {
          alert("Please enter at least one wall length.");
          return;
        }

        let perimeter = walls.reduce((a, b) => a + b, 0);
        const totalWithWaste = perimeter * (1 + waste / 100);

        let perimeterFt, perimeterM, totalFt, totalM;
        if (unit === "ft") {
          perimeterFt = perimeter;
          perimeterM = ftToM(perimeter);
          totalFt = totalWithWaste;
          totalM = ftToM(totalWithWaste);
        } else {
          perimeterM = perimeter;
          perimeterFt = mToFt(perimeter);
          totalM = totalWithWaste;
          totalFt = mToFt(totalWithWaste);
        }

        const sticks =
          stickLen > 0
            ? Math.ceil(
                (unit === "ft" ? totalFt : totalM) /
                  (unit === "ft" ? stickLen : ftToM(stickLen))
              )
            : NaN;

        document.getElementById("basic-perimeter").textContent =
          unit === "ft"
            ? formatLength(perimeterFt, "ft")
            : formatLength(perimeterM, "m");
        document.getElementById("basic-perimeter-alt").textContent =
          unit === "ft"
            ? formatLength(perimeterM, "m")
            : formatLength(perimeterFt, "ft");

        document.getElementById("basic-total-with-waste").textContent =
          unit === "ft"
            ? formatLength(totalFt, "ft")
            : formatLength(totalM, "m");
        document.getElementById(
          "basic-waste-note"
        ).textContent = `Includes ${waste.toFixed(0)}% waste allowance.`;

        if (!isNaN(sticks)) {
          document.getElementById("basic-sticks").textContent =
            sticks + " sticks";
          document.getElementById(
            "basic-sticks-note"
          ).textContent = `Based on ${stickLen} ft standard length.`;
        } else {
          document.getElementById("basic-sticks").textContent = "–";
          document.getElementById("basic-sticks-note").textContent =
            "Select a standard stick length to estimate quantity.";
        }

        document.getElementById("basic-results").classList.remove("hidden");
      });

      // PICTURE FRAME CALC
      document.getElementById("pic-calc").addEventListener("click", () => {
        const wallWidth = parseFloat(
          document.getElementById("pic-wall-width").value
        );
        const wallHeight = parseFloat(
          document.getElementById("pic-wall-height").value
        );
        const boxHeight = parseFloat(
          document.getElementById("pic-box-height").value
        );
        let boxWidth = parseFloat(
          document.getElementById("pic-box-width").value
        );
        let boxCount = parseInt(
          document.getElementById("pic-box-count").value,
          10
        );
        const hGap =
          parseFloat(document.getElementById("pic-h-gap").value) || 0;
        const vMargin =
          parseFloat(document.getElementById("pic-v-margin").value) || 0;
        const wallCount =
          parseInt(document.getElementById("pic-wall-count").value, 10) || 1;
        const unit = document.getElementById("pic-units").value;

        if (!wallWidth || !wallHeight || !boxHeight) {
          alert("Please enter wall width, wall height, and box height.");
          return;
        }

        const usableHeight = wallHeight - 2 * vMargin;
        if (usableHeight <= boxHeight) {
          alert(
            "Box height plus top/bottom margins must be less than wall height."
          );
          return;
        }

        const effectiveWidth = wallWidth; // horizontal margins can be included in box width if desired

        if (!boxWidth && boxCount <= 0) {
          alert("Please enter either a box width or a number of boxes.");
          return;
        }

        if (boxCount > 0 && boxWidth && hGap >= 0) {
          // Use given count and width, check fit
          const totalBoxesWidth = boxCount * boxWidth + (boxCount - 1) * hGap;
          if (totalBoxesWidth > effectiveWidth) {
            alert(
              "Boxes and gaps do not fit within the wall width. Reduce box width or count."
            );
            return;
          }
        } else {
          // Auto-calc box count from width and gap
          if (!boxWidth) {
            alert("To auto-calc boxes, please provide a box width.");
            return;
          }
          const approxCount = (effectiveWidth + hGap) / (boxWidth + hGap);
          boxCount = Math.max(1, Math.floor(approxCount));
          if (boxCount < 1) boxCount = 1;
        }

        // If width not provided but count is, distribute width
        if (!boxWidth && boxCount > 0) {
          const totalGap = (boxCount - 1) * hGap;
          boxWidth = (effectiveWidth - totalGap) / boxCount;
          if (boxWidth <= 0) {
            alert("Panel width becomes negative. Adjust spacing or box count.");
            return;
          }
        }

        const boxPerimeter = 2 * (boxWidth + boxHeight);
        const totalBoxes = boxCount * wallCount;
        const totalLength = boxPerimeter * totalBoxes;

        let totalFt, totalM;
        if (unit === "ft") {
          totalFt = totalLength;
          totalM = ftToM(totalLength);
        } else {
          totalM = totalLength;
          totalFt = mToFt(totalLength);
        }

        document.getElementById("pic-boxes-per-wall").textContent =
          boxCount.toString();
        document.getElementById("pic-box-perimeter").textContent = formatLength(
          totalLength / totalBoxes,
          unit
        );
        document.getElementById("pic-total-length").textContent =
          unit === "ft"
            ? formatLength(totalFt, "ft")
            : formatLength(totalM, "m");
        document.getElementById("pic-total-length-alt").textContent =
          unit === "ft"
            ? formatLength(totalM, "m")
            : formatLength(totalFt, "ft");

        document.getElementById(
          "pic-layout-note"
        ).textContent = `Each wall has ${boxCount} box(es) of approximately ${boxWidth.toFixed(
          2
        )} × ${boxHeight.toFixed(
          2
        )} ${unit}, with horizontal gaps of ${hGap.toFixed(
          2
        )} ${unit} and vertical margins of ${vMargin.toFixed(2)} ${unit}.`;

        document.getElementById("pic-results").classList.remove("hidden");
      });

      // WAINSCOTING CALC
      document.getElementById("wain-calc").addEventListener("click", () => {
        const wallLen = parseFloat(
          document.getElementById("wain-wall-length").value
        );
        const height = parseFloat(document.getElementById("wain-height").value);
        const targetPanelWidth = parseFloat(
          document.getElementById("wain-panel-width").value
        );
        const stileWidth =
          parseFloat(document.getElementById("wain-stile-width").value) || 0;
        const endMargin =
          parseFloat(document.getElementById("wain-end-margin").value) || 0;
        const railsOption = document.getElementById("wain-rails").value;
        const unit = document.getElementById("wain-units").value;

        if (!wallLen || !height || !targetPanelWidth) {
          alert(
            "Please enter wall length, wainscot height, and target panel width."
          );
          return;
        }

        const effectiveLen = wallLen - 2 * endMargin;
        if (effectiveLen <= targetPanelWidth) {
          alert(
            "Effective wall length is too short for the chosen panel width and margins."
          );
          return;
        }

        // Approximate panel count
        const approxCount =
          (effectiveLen + stileWidth) / (targetPanelWidth + stileWidth);
        let panelCount = Math.max(1, Math.round(approxCount));
        if (panelCount < 1) panelCount = 1;

        const totalStilesWidth = (panelCount - 1) * stileWidth;
        const actualPanelWidth = (effectiveLen - totalStilesWidth) / panelCount;

        // Vertical trim: stiles + end trims (assume end trims same width as stile)
        const verticalPieces = panelCount - 1 + 2; // internal stiles + two ends
        const verticalLength = verticalPieces * height;

        // Horizontal trim: rails depending on option
        let horizontalLength = 0;
        if (railsOption === "both") {
          horizontalLength = 2 * wallLen;
        } else if (railsOption === "top") {
          horizontalLength = wallLen;
        }

        let vertFt, vertM, horizFt, horizM;
        if (unit === "ft") {
          vertFt = verticalLength;
          vertM = ftToM(verticalLength);
          horizFt = horizontalLength;
          horizM = ftToM(horizontalLength);
        } else {
          vertM = verticalLength;
          vertFt = mToFt(verticalLength);
          horizM = horizontalLength;
          horizFt = mToFt(horizontalLength);
        }

        document.getElementById("wain-panel-count").textContent =
          panelCount.toString();
        document.getElementById(
          "wain-panel-width-actual"
        ).textContent = `Actual panel width ≈ ${actualPanelWidth.toFixed(
          2
        )} ${unit}.`;

        document.getElementById("wain-vertical-length").textContent =
          unit === "ft" ? formatLength(vertFt, "ft") : formatLength(vertM, "m");
        document.getElementById("wain-vertical-length-alt").textContent =
          unit === "ft" ? formatLength(vertM, "m") : formatLength(vertFt, "ft");

        document.getElementById("wain-horizontal-length").textContent =
          unit === "ft"
            ? formatLength(horizFt, "ft")
            : formatLength(horizM, "m");
        document.getElementById("wain-horizontal-length-alt").textContent =
          unit === "ft"
            ? formatLength(horizM, "m")
            : formatLength(horizFt, "ft");

        let railsText = "";
        if (railsOption === "both")
          railsText = "Includes both top and bottom rails.";
        else if (railsOption === "top") railsText = "Includes top rail only.";
        else railsText = "No rails included (panels and stiles only).";

        document.getElementById(
          "wain-layout-note"
        ).textContent = `${railsText} Effective wall length for panels is ${effectiveLen.toFixed(
          2
        )} ${unit} with end margins of ${endMargin.toFixed(2)} ${unit}.`;

        document.getElementById("wain-results").classList.remove("hidden");
      });

      // CURVED / RADIUS CALC
      const curveTypeEl = document.getElementById("curve-type");
      const curveAngleGroup = document.getElementById("curve-angle-group");
      curveTypeEl.addEventListener("change", () => {
        curveAngleGroup.classList.toggle(
          "hidden",
          curveTypeEl.value === "full"
        );
      });

      document.getElementById("curve-calc").addEventListener("click", () => {
        const type = document.getElementById("curve-type").value;
        const radius = parseFloat(
          document.getElementById("curve-radius").value
        );
        const angleDeg =
          parseFloat(document.getElementById("curve-angle").value) || 0;
        const unit = document.getElementById("curve-units").value;

        if (!radius || radius <= 0) {
          alert("Please enter a positive radius.");
          return;
        }

        let arcLength;
        if (type === "full") {
          arcLength = 2 * Math.PI * radius;
        } else {
          const angleRad = (angleDeg * Math.PI) / 180;
          arcLength = radius * angleRad;
        }

        const fullCircle = 2 * Math.PI * radius;

        let arcFt, arcM, fullFt, fullM;
        if (unit === "ft") {
          arcFt = arcLength;
          arcM = ftToM(arcLength);
          fullFt = fullCircle;
          fullM = ftToM(fullCircle);
        } else {
          arcM = arcLength;
          arcFt = mToFt(arcLength);
          fullM = fullCircle;
          fullFt = mToFt(fullCircle);
        }

        document.getElementById("curve-length").textContent =
          unit === "ft" ? formatLength(arcFt, "ft") : formatLength(arcM, "m");
        document.getElementById("curve-length-alt").textContent =
          unit === "ft" ? formatLength(arcM, "m") : formatLength(arcFt, "ft");

        document.getElementById("curve-full-circle").textContent =
          unit === "ft" ? formatLength(fullFt, "ft") : formatLength(fullM, "m");

        document.getElementById("curve-results").classList.remove("hidden");
      });

      // Mobile menu script (simple)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const isHidden = mobileMenu.classList.contains("hidden");
          mobileMenu.classList.toggle("hidden", !isHidden);
          mobileToggle.setAttribute(
            "aria-expanded",
            isHidden ? "true" : "false"
          );
        });
      }

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
