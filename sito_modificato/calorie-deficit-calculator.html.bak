    <script>
      (function () {
        const unitButtons = document.querySelectorAll(".unit-toggle");
        const sexButtons = document.querySelectorAll(".sex-toggle");
        const goalButtons = document.querySelectorAll(".goal-toggle");
        const deficitSlider = document.getElementById("deficitSlider");
        const deficitValue = document.getElementById("deficitValue");
        const weeklyLossSlider = document.getElementById("weeklyLossSlider");
        const weeklyLossValue = document.getElementById("weeklyLossValue");
        const macroPreset = document.getElementById("macroPreset");
        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const inputError = document.getElementById("inputError");

        let currentUnits = "metric";
        let currentSex = "male";
        let currentGoal = "lose";

        function setActive(buttons, valueAttr, value) {
          buttons.forEach((btn) => {
            if (btn.getAttribute(valueAttr) === value) {
              btn.classList.add("bg-blue-50", "text-blue-700");
              if (valueAttr === "data-goal" && value === "lose") {
                btn.classList.remove("bg-blue-50", "text-blue-700");
                btn.classList.add("bg-red-50", "text-red-700");
              }
            } else {
              btn.classList.remove(
                "bg-blue-50",
                "text-blue-700",
                "bg-red-50",
                "text-red-700"
              );
              btn.classList.add("text-gray-700");
            }
          });
        }

        unitButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentUnits = btn.getAttribute("data-units");
            unitButtons.forEach((b) =>
              b.classList.remove("bg-blue-50", "text-blue-700")
            );
            btn.classList.add("bg-blue-50", "text-blue-700");

            document
              .getElementById("heightMetricGroup")
              .classList.toggle("hidden", currentUnits !== "metric");
            document
              .getElementById("weightMetricGroup")
              .classList.toggle("hidden", currentUnits !== "metric");
            document
              .getElementById("goalWeightMetricGroup")
              .classList.toggle("hidden", currentUnits !== "metric");
            document
              .getElementById("heightImperialGroup")
              .classList.toggle("hidden", currentUnits !== "imperial");
            document
              .getElementById("weightImperialGroup")
              .classList.toggle("hidden", currentUnits !== "imperial");
            document
              .getElementById("goalWeightImperialGroup")
              .classList.toggle("hidden", currentUnits !== "imperial");

            syncUnits();
            updateWeeklyLossLabel();
          });
        });

        sexButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentSex = btn.getAttribute("data-sex");
            sexButtons.forEach((b) =>
              b.classList.remove("bg-blue-50", "text-blue-700")
            );
            btn.classList.add("bg-blue-50", "text-blue-700");
          });
        });

        goalButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentGoal = btn.getAttribute("data-goal");
            goalButtons.forEach((b) => {
              b.classList.remove(
                "bg-red-50",
                "text-red-700",
                "bg-blue-50",
                "text-blue-700"
              );
              b.classList.add("text-gray-700");
            });
            if (currentGoal === "lose") {
              btn.classList.add("bg-red-50", "text-red-700");
              document
                .getElementById("deficitControls")
                .classList.remove("hidden");
            } else if (currentGoal === "maintain") {
              btn.classList.add("bg-blue-50", "text-blue-700");
              document
                .getElementById("deficitControls")
                .classList.add("hidden");
            } else {
              btn.classList.add("bg-blue-50", "text-blue-700");
              document
                .getElementById("deficitControls")
                .classList.remove("hidden");
            }
            updateWeeklyLossLabel();
          });
        });

        function syncUnits() {
          if (currentUnits === "imperial") {
            const kg =
              parseFloat(document.getElementById("weightKg").value) || 0;
            const goalKg =
              parseFloat(document.getElementById("goalWeightKg").value) || 0;
            const cm =
              parseFloat(document.getElementById("heightCm").value) || 0;
            if (kg > 0)
              document.getElementById("weightLbs").value = (
                kg * 2.20462
              ).toFixed(0);
            if (goalKg > 0)
              document.getElementById("goalWeightLbs").value = (
                goalKg * 2.20462
              ).toFixed(0);
            if (cm > 0) {
              const totalIn = cm / 2.54;
              document.getElementById("heightFt").value = Math.floor(
                totalIn / 12
              );
              document.getElementById("heightIn").value = Math.round(
                totalIn % 12
              );
            }
          } else {
            const lbs =
              parseFloat(document.getElementById("weightLbs").value) || 0;
            const goalLbs =
              parseFloat(document.getElementById("goalWeightLbs").value) || 0;
            const ft =
              parseFloat(document.getElementById("heightFt").value) || 0;
            const inch =
              parseFloat(document.getElementById("heightIn").value) || 0;
            if (lbs > 0)
              document.getElementById("weightKg").value = (
                lbs / 2.20462
              ).toFixed(1);
            if (goalLbs > 0)
              document.getElementById("goalWeightKg").value = (
                goalLbs / 2.20462
              ).toFixed(1);
            const totalIn = ft * 12 + inch;
            if (totalIn > 0)
              document.getElementById("heightCm").value = (
                totalIn * 2.54
              ).toFixed(1);
          }
        }

        function updateDeficitLabel() {
          const val = parseInt(deficitSlider.value, 10);
          deficitValue.textContent =
            (currentGoal === "gain" ? "+" : "") + val + " kcal";
          updateWeeklyLossLabel();
        }

        function updateWeeklyLossLabel() {
          const kgPerWeek = parseFloat(weeklyLossSlider.value);
          const isMetric = currentUnits === "metric";
          const label = isMetric
            ? kgPerWeek === 0
              ? "0 kg/week"
              : kgPerWeek.toFixed(1) + " kg/week"
            : kgPerWeek === 0
            ? "0 lb/week"
            : (kgPerWeek * 2.20462).toFixed(1) + " lb/week";
          weeklyLossValue.textContent = label;
        }

        deficitSlider.addEventListener("input", updateDeficitLabel);
        weeklyLossSlider.addEventListener("input", updateWeeklyLossLabel);

        function validateInputs() {
          const age = parseFloat(document.getElementById("age").value);
          const heightCm =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("heightCm").value)
              : ((parseFloat(document.getElementById("heightFt").value) || 0) *
                  12 +
                  (parseFloat(document.getElementById("heightIn").value) ||
                    0)) *
                2.54;
          const weightKg =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("weightKg").value)
              : (parseFloat(document.getElementById("weightLbs").value) || 0) /
                2.20462;
          const goalWeightKg =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("goalWeightKg").value)
              : (parseFloat(document.getElementById("goalWeightLbs").value) ||
                  0) / 2.20462;

          if (!age || age < 14 || age > 100) return false;
          if (!heightCm || heightCm < 120 || heightCm > 230) return false;
          if (!weightKg || weightKg < 35 || weightKg > 250) return false;
          if (!goalWeightKg || goalWeightKg < 35 || goalWeightKg > 250)
            return false;
          return true;
        }

        function calculate() {
          inputError.classList.add("hidden");
          if (!validateInputs()) {
            inputError.classList.remove("hidden");
            return;
          }

          const age = parseFloat(document.getElementById("age").value);
          const heightCm =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("heightCm").value)
              : ((parseFloat(document.getElementById("heightFt").value) || 0) *
                  12 +
                  (parseFloat(document.getElementById("heightIn").value) ||
                    0)) *
                2.54;
          const weightKg =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("weightKg").value)
              : (parseFloat(document.getElementById("weightLbs").value) || 0) /
                2.20462;
          const goalWeightKg =
            currentUnits === "metric"
              ? parseFloat(document.getElementById("goalWeightKg").value)
              : (parseFloat(document.getElementById("goalWeightLbs").value) ||
                  0) / 2.20462;
          const activity = parseFloat(
            document.getElementById("activity").value
          );

          let bmr;
          if (currentSex === "male") {
            bmr = 10 * weightKg + 6.25 * heightCm - 5 * age + 5;
          } else {
            bmr = 10 * weightKg + 6.25 * heightCm - 5 * age - 161;
          }
          const tdee = bmr * activity;

          let deficit = parseInt(deficitSlider.value, 10);
          let weeklyChangeKg = (7 * deficit) / 7700;

          const weeklyTargetKg = parseFloat(weeklyLossSlider.value);
          if (currentGoal === "lose") {
            const deficitFromWeekly = (weeklyTargetKg * 7700) / 7;
            if (deficitFromWeekly > 0 && deficitFromWeekly < 1200) {
              deficit = Math.round(deficitFromWeekly / 50) * 50;
              deficitSlider.value = deficit;
              updateDeficitLabel();
              weeklyChangeKg = weeklyTargetKg;
            }
          } else if (currentGoal === "gain") {
            weeklyChangeKg = weeklyTargetKg;
          } else {
            deficit = 0;
            weeklyChangeKg = 0;
          }

          let targetCalories;
          if (currentGoal === "lose") {
            targetCalories = tdee - deficit;
          } else if (currentGoal === "gain") {
            targetCalories = tdee + deficit;
          } else {
            targetCalories = tdee;
          }
          if (targetCalories < bmr * 0.8) {
            targetCalories = bmr * 0.8;
          }

          document.getElementById("bmrResult").textContent =
            Math.round(bmr) + " kcal/day";
          document.getElementById("tdeeResult").textContent =
            Math.round(tdee) + " kcal/day";
          document.getElementById("targetCaloriesResult").textContent =
            Math.round(targetCalories) + " kcal/day";

          const actualDeficit =
            currentGoal === "lose"
              ? tdee - targetCalories
              : currentGoal === "gain"
              ? targetCalories - tdee
              : 0;
          const deficitPct = tdee > 0 ? (actualDeficit / tdee) * 100 : 0;
          const sign = currentGoal === "gain" ? "+" : "-";
          document.getElementById("deficitSummary").textContent =
            currentGoal === "maintain"
              ? "No deficit: calories match your estimated TDEE."
              : `Deficit: ${sign}${Math.round(
                  actualDeficit
                )} kcal/day (${sign}${Math.abs(deficitPct).toFixed(
                  1
                )}% vs TDEE)`;

          let weeklyText;
          if (currentGoal === "maintain" || weeklyChangeKg === 0) {
            weeklyText = "Approximately 0 change (weight maintenance).";
          } else {
            const change =
              currentGoal === "gain" ? weeklyChangeKg : -weeklyChangeKg;
            const unitLabel = currentUnits === "metric" ? "kg/week" : "lb/week";
            const displayChange =
              currentUnits === "metric" ? change : change * 2.20462;
            weeklyText =
              (displayChange > 0 ? "+" : "") +
              displayChange.toFixed(2) +
              " " +
              unitLabel;
          }
          document.getElementById("weeklyChangeResult").textContent =
            weeklyText;

          const deltaKg = goalWeightKg - weightKg;
          let weeksToGoal = null;
          if (currentGoal === "lose" && weeklyChangeKg > 0 && deltaKg < 0) {
            weeksToGoal = Math.abs(deltaKg) / weeklyChangeKg;
          } else if (
            currentGoal === "gain" &&
            weeklyChangeKg > 0 &&
            deltaKg > 0
          ) {
            weeksToGoal = Math.abs(deltaKg) / weeklyChangeKg;
          }

          if (weeksToGoal && isFinite(weeksToGoal)) {
            const days = weeksToGoal * 7;
            const months = weeksToGoal / 4.345;
            let text = weeksToGoal.toFixed(1) + " weeks";
            if (months >= 1) {
              text += " (~" + months.toFixed(1) + " months)";
            }
            document.getElementById("timeToGoalResult").textContent = text;
          } else {
            document.getElementById("timeToGoalResult").textContent =
              "Not applicable for the selected goal and weights.";
          }

          const cal = Math.round(targetCalories);
          let pPct = 0.3,
            cPct = 0.4,
            fPct = 0.3;
          if (macroPreset.value === "higherProtein") {
            pPct = 0.35;
            cPct = 0.35;
            fPct = 0.3;
          } else if (macroPreset.value === "lowerCarb") {
            pPct = 0.3;
            cPct = 0.25;
            fPct = 0.45;
          }
          const proteinG = Math.round((cal * pPct) / 4);
          const carbsG = Math.round((cal * cPct) / 4);
          const fatG = Math.round((cal * fPct) / 9);

          document.getElementById("macroCalories").textContent = cal + " kcal";
          document.getElementById("macroProtein").textContent = proteinG + " g";
          document.getElementById("macroCarbs").textContent = carbsG + " g";
          document.getElementById("macroFat").textContent = fatG + " g";

          const proteinPerKg = proteinG / weightKg;
          document.getElementById("macroProteinNote").textContent =
            "≈ " + proteinPerKg.toFixed(2) + " g/kg";

          const tbody = document.getElementById("progressTableBody");
          tbody.innerHTML = "";
          const maxWeeks = 12;
          for (let week = 0; week <= maxWeeks; week++) {
            const tr = document.createElement("tr");
            const wChange =
              weeklyChangeKg * week * (currentGoal === "gain" ? 1 : -1);
            const estWeightKg = weightKg + wChange;
            const totalChangeKg = estWeightKg - weightKg;

            const displayWeight =
              currentUnits === "metric"
                ? estWeightKg.toFixed(1) + " kg"
                : (estWeightKg * 2.20462).toFixed(1) + " lb";
            const displayTotalChange =
              currentUnits === "metric"
                ? totalChangeKg.toFixed(1) + " kg"
                : (totalChangeKg * 2.20462).toFixed(1) + " lb";

            const weekCell = document.createElement("td");
            weekCell.className =
              "px-3 py-2 border-b border-gray-100 text-gray-700";
            weekCell.textContent = week === 0 ? "Start" : week.toString();

            const weightCell = document.createElement("td");
            weightCell.className =
              "px-3 py-2 border-b border-gray-100 text-gray-700";
            weightCell.textContent = displayWeight;

            const changeCell = document.createElement("td");
            changeCell.className =
              "px-3 py-2 border-b border-gray-100 text-gray-700";
            changeCell.textContent =
              (totalChangeKg > 0 ? "+" : "") + displayTotalChange;

            tr.appendChild(weekCell);
            tr.appendChild(weightCell);
            tr.appendChild(changeCell);
            tbody.appendChild(tr);
          }
        }

        calculateBtn.addEventListener("click", calculate);

        resetBtn.addEventListener("click", () => {
          document.getElementById("age").value = 30;
          document.getElementById("heightCm").value = 175;
          document.getElementById("weightKg").value = 80;
          document.getElementById("goalWeightKg").value = 70;
          document.getElementById("heightFt").value = 5;
          document.getElementById("heightIn").value = 9;
          document.getElementById("weightLbs").value = 176;
          document.getElementById("goalWeightLbs").value = 154;
          document.getElementById("activity").value = 1.55;
          deficitSlider.value = 500;
          weeklyLossSlider.value = 0.5;
          macroPreset.value = "balanced";
          currentUnits = "metric";
          currentSex = "male";
          currentGoal = "lose";
          unitButtons[0].click();
          sexButtons[0].click();
          goalButtons[0].click();
          updateDeficitLabel();
          updateWeeklyLossLabel();
          document.getElementById("bmrResult").textContent = "— kcal/day";
          document.getElementById("tdeeResult").textContent = "— kcal/day";
          document.getElementById("targetCaloriesResult").textContent =
            "— kcal/day";
          document.getElementById("deficitSummary").textContent =
            "Deficit: — kcal/day (—% vs TDEE)";
          document.getElementById("weeklyChangeResult").textContent = "—";
          document.getElementById("timeToGoalResult").textContent = "—";
          document.getElementById("macroCalories").textContent = "— kcal";
          document.getElementById("macroProtein").textContent = "— g";
          document.getElementById("macroCarbs").textContent = "— g";
          document.getElementById("macroFat").textContent = "— g";
          document.getElementById("macroProteinNote").textContent = "≈ — g/kg";
          document.getElementById("progressTableBody").innerHTML =
            '<tr><td class="px-3 py-2 border-b border-gray-100 text-gray-500" colspan="3">Enter your details and click “Calculate” to see a 12‑week projection.</td></tr>';
          inputError.classList.add("hidden");
        });

        updateDeficitLabel();
        updateWeeklyLossLabel();
      })();
    </script>

