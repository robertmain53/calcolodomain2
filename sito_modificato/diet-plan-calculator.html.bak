      const regenerateMealsBtn = document.getElementById("regenerate-meals");

      function pickRandom(arr) {
        return arr[Math.floor(Math.random() * arr.length)];
      }

      function generateMealPlan(totalKcal, pG, cG, fG, mealsPerDay, dietType) {
        const db = foodDatabase[dietType] || foodDatabase.omnivore;
        mealPlanContainer.innerHTML = "";

        let mainMeals = 3;
        let snacks = Math.max(mealsPerDay - 3, 0);
        if (mealsPerDay <= 3) {
          mainMeals = mealsPerDay;
          snacks = 0;
        }

        const mainShare = snacks > 0 ? 0.75 : 1.0;
        const snackShare = 1 - mainShare;
        const kcalMainTotal = totalKcal * mainShare;
        const kcalSnackTotal = totalKcal * snackShare;
        const kcalPerMain = Math.round(kcalMainTotal / mainMeals);
        const kcalPerSnack =
          snacks > 0 ? Math.round(kcalSnackTotal / snacks) : 0;

        const meals = [];

        if (mainMeals >= 1)
          meals.push({
            label: "Breakfast",
            type: "breakfast",
            target: kcalPerMain,
          });
        if (mainMeals >= 2)
          meals.push({ label: "Lunch", type: "lunch", target: kcalPerMain });
        if (mainMeals >= 3)
          meals.push({ label: "Dinner", type: "dinner", target: kcalPerMain });
        for (let i = 0; i < snacks; i++) {
          meals.push({
            label: `Snack ${i + 1}`,
            type: "snack",
            target: kcalPerSnack,
          });
        }

        meals.forEach((meal) => {
          const options = db[meal.type] || db.snack;
          const food = pickRandom(options);
          const scale = meal.target / food.kcal;
          const portion = Math.round(scale * 100) / 100;

          const card = document.createElement("div");
          card.className = "border border-gray-200 rounded-lg p-3 bg-slate-50";
          card.innerHTML = `
        <div class="flex justify-between items-center mb-1">
          <h3 class="font-semibold text-sm">${meal.label}</h3>
          <span class="text-xs text-gray-500">~${meal.target} kcal</span>
        </div>
        <p class="text-sm text-gray-800">${food.name}</p>
        <p class="text-xs text-gray-500 mt-1">Portion: about ${portion.toFixed(
          2
        )} × the listed serving (adjust to appetite and hunger).</p>
      `;
          mealPlanContainer.appendChild(card);
        });
      }

      regenerateMealsBtn.addEventListener("click", () => {
        if (resultsSection.classList.contains("hidden")) return;
        const totalKcal = parseInt(
          caloriesTargetEl.textContent.replace(/,/g, ""),
          10
        );
        const pG = parseInt(proteinGramsEl.textContent, 10);
        const cG = parseInt(carbGramsEl.textContent, 10);
        const fG = parseInt(fatGramsEl.textContent, 10);
        const mealsPerDay = parseInt(mealsPerDaySelect.value, 10);
        const dietType = dietTypeSelect.value;
        if (!isNaN(totalKcal)) {
          generateMealPlan(totalKcal, pG, cG, fG, mealsPerDay, dietType);
        }
      });

      document
