    <script>
      // Height & weight sync
      function kgToLb(kg) {
        return kg * 2.2046226218;
      }
      function lbToKg(lb) {
        return lb / 2.2046226218;
      }
      function cmToFeetInches(cm) {
        const totalIn = cm / 2.54;
        const ft = Math.floor(totalIn / 12);
        const inch = Math.round(totalIn - ft * 12);
        return { ft, inch };
      }
      function feetInchesToCm(ft, inch) {
        if (isNaN(ft) || isNaN(inch)) return null;
        return (ft * 12 + inch) * 2.54;
      }

      const heightCmInput = document.getElementById("height-cm");
      const heightFtInput = document.getElementById("height-ft");
      const heightInInput = document.getElementById("height-in");
      const weightKgInput = document.getElementById("weight-kg");
      const weightLbInput = document.getElementById("weight-lb");

      heightCmInput.addEventListener("input", () => {
        const cm = parseFloat(heightCmInput.value);
        if (!isNaN(cm)) {
          const { ft, inch } = cmToFeetInches(cm);
          heightFtInput.value = ft;
          heightInInput.value = inch;
        }
      });
      heightFtInput.addEventListener("input", syncHeightFromImperial);
      heightInInput.addEventListener("input", syncHeightFromImperial);
      function syncHeightFromImperial() {
        const ft = parseFloat(heightFtInput.value);
        const inch = parseFloat(heightInInput.value);
        const cm = feetInchesToCm(ft, inch);
        if (cm) heightCmInput.value = cm.toFixed(0);
      }

      weightKgInput.addEventListener("input", () => {
        const kg = parseFloat(weightKgInput.value);
        if (!isNaN(kg)) weightLbInput.value = kgToLb(kg).toFixed(1);
      });
      weightLbInput.addEventListener("input", () => {
        const lb = parseFloat(weightLbInput.value);
        if (!isNaN(lb)) weightKgInput.value = lbToKg(lb).toFixed(1);
      });

      // Macro pattern presets
      const macroPatternSelect = document.getElementById("macro-pattern");
      const proteinPercentInput = document.getElementById("protein-percent");
      const carbPercentInput = document.getElementById("carb-percent");
      const fatPercentInput = document.getElementById("fat-percent");
      const macroWarning = document.getElementById("macro-warning");

      function setMacroPreset(pattern) {
        if (pattern === "balanced") {
          proteinPercentInput.value = 30;
          carbPercentInput.value = 40;
          fatPercentInput.value = 30;
        } else if (pattern === "high-protein") {
          proteinPercentInput.value = 35;
          carbPercentInput.value = 35;
          fatPercentInput.value = 30;
        } else if (pattern === "low-carb") {
          proteinPercentInput.value = 30;
          carbPercentInput.value = 25;
          fatPercentInput.value = 45;
        } else if (pattern === "keto") {
          proteinPercentInput.value = 25;
          carbPercentInput.value = 5;
          fatPercentInput.value = 70;
        }
      }
      macroPatternSelect.addEventListener("change", () => {
        if (macroPatternSelect.value !== "custom") {
          setMacroPreset(macroPatternSelect.value);
          macroWarning.classList.add("hidden");
        }
      });

      function validateMacros() {
        const p = parseFloat(proteinPercentInput.value) || 0;
        const c = parseFloat(carbPercentInput.value) || 0;
        const f = parseFloat(fatPercentInput.value) || 0;
        const sum = p + c + f;
        if (Math.round(sum) !== 100) {
          macroWarning.classList.remove("hidden");
          return false;
        }
        macroWarning.classList.add("hidden");
        return { p, c, f };
      }

      // Core calculation
      function calculateBMR(sex, age, weightKg, heightCm, bodyFat) {
        if (!isNaN(bodyFat) && bodyFat > 3 && bodyFat < 60) {
          const leanMass = weightKg * (1 - bodyFat / 100);
          return 370 + 21.6 * leanMass;
        }
        if (sex === "male") {
          return 10 * weightKg + 6.25 * heightCm - 5 * age + 5;
        } else {
          return 10 * weightKg + 6.25 * heightCm - 5 * age - 161;
        }
      }

      function goalMultiplier(goal) {
        switch (goal) {
          case "lose-slow":
            return 0.9;
          case "lose-moderate":
            return 0.8;
          case "lose-fast":
            return 0.75;
          case "maintain":
            return 1.0;
          case "gain-slow":
            return 1.1;
          case "gain-moderate":
            return 1.2;
          default:
            return 1.0;
        }
      }

      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");

      const resultsSection = document.getElementById("results-section");
      const caloriesTargetEl = document.getElementById("calories-target");
      const caloriesNoteEl = document.getElementById("calories-note");
      const proteinGramsEl = document.getElementById("protein-grams");
      const carbGramsEl = document.getElementById("carb-grams");
      const fatGramsEl = document.getElementById("fat-grams");
      const caloriesPerMealEl = document.getElementById("calories-per-meal");
      const mealsCountLabelEl = document.getElementById("meals-count-label");
      const snackNoteEl = document.getElementById("snack-note");
      const macroTableBody = document.getElementById("macro-table-body");
      const mealsPerDaySelect = document.getElementById("meals-per-day");
      const goalSelect = document.getElementById("goal");
      const activitySelect = document.getElementById("activity");
      const dietTypeSelect = document.getElementById("diet-type");

      function describeGoal(goal) {
        switch (goal) {
          case "lose-slow":
            return "about 10% below maintenance (slow loss)";
          case "lose-moderate":
            return "about 20% below maintenance (moderate loss)";
          case "lose-fast":
            return "about 25% below maintenance (faster loss)";
          case "maintain":
            return "around maintenance";
          case "gain-slow":
            return "about 10% above maintenance (slow gain)";
          case "gain-moderate":
            return "about 20% above maintenance (moderate gain)";
          default:
            return "";
        }
      }

      calculateBtn.addEventListener("click", () => {
        const sex =
          document.querySelector('input[name="sex"]:checked')?.value || "male";
        const age = parseFloat(document.getElementById("age").value);
        const heightCm = parseFloat(heightCmInput.value);
        const weightKg = parseFloat(weightKgInput.value);
        const bodyFat = parseFloat(document.getElementById("bodyfat").value);
        const activity = parseFloat(activitySelect.value);
        const goal = goalSelect.value;
        const mealsPerDay = parseInt(mealsPerDaySelect.value, 10);

        const macroVals = validateMacros();
        if (!macroVals) return;

        if (isNaN(age) || isNaN(heightCm) || isNaN(weightKg)) {
          alert("Please enter valid age, height, and weight.");
          return;
        }

        const bmr = calculateBMR(sex, age, weightKg, heightCm, bodyFat);
        const tdee = bmr * activity;
        const gm = goalMultiplier(goal);
        const targetCalories = Math.round(tdee * gm);

        const pKcal = targetCalories * (macroVals.p / 100);
        const cKcal = targetCalories * (macroVals.c / 100);
        const fKcal = targetCalories * (macroVals.f / 100);

        const pG = Math.round(pKcal / 4);
        const cG = Math.round(cKcal / 4);
        const fG = Math.round(fKcal / 9);

        caloriesTargetEl.textContent = targetCalories.toLocaleString();
        caloriesNoteEl.textContent = `Based on an estimated TDEE of ${Math.round(
          tdee
        ).toLocaleString()} kcal and a goal of ${describeGoal(goal)}.`;

        proteinGramsEl.textContent = pG;
        carbGramsEl.textContent = cG;
        fatGramsEl.textContent = fG;

        macroTableBody.innerHTML = "";
        const rows = [
          {
            name: "Protein",
            pct: macroVals.p,
            grams: pG,
            kcal: Math.round(pKcal),
          },
          {
            name: "Carbohydrates",
            pct: macroVals.c,
            grams: cG,
            kcal: Math.round(cKcal),
          },
          { name: "Fat", pct: macroVals.f, grams: fG, kcal: Math.round(fKcal) },
        ];
        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-t">${row.name}</td>
        <td class="px-3 py-2 border-t text-right">${row.pct.toFixed(0)}%</td>
        <td class="px-3 py-2 border-t text-right">${row.grams}</td>
        <td class="px-3 py-2 border-t text-right">${row.kcal}</td>
      `;
          macroTableBody.appendChild(tr);
        });

        // Per-meal calories
        mealsCountLabelEl.textContent = mealsPerDay;
        let mainMeals = 3;
        let snacks = Math.max(mealsPerDay - 3, 0);
        if (mealsPerDay <= 3) {
          mainMeals = mealsPerDay;
          snacks = 0;
        }
        const mainShare = snacks > 0 ? 0.75 : 1.0;
        const snackShare = 1 - mainShare;
        const kcalMainTotal = targetCalories * mainShare;
        const kcalSnackTotal = targetCalories * snackShare;
        const kcalPerMain = Math.round(kcalMainTotal / mainMeals);
        caloriesPerMealEl.textContent = kcalPerMain;
        if (snacks > 0) {
          const kcalPerSnack = Math.round(kcalSnackTotal / snacks);
          snackNoteEl.textContent = `${snacks} snack(s) at about ${kcalPerSnack} kcal each.`;
        } else {
          snackNoteEl.textContent =
            "No snacks specified; calories are split evenly across meals.";
        }

        generateMealPlan(
          targetCalories,
          pG,
          cG,
          fG,
          mealsPerDay,
          dietTypeSelect.value
        );
        resultsSection.classList.remove("hidden");
        resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });

