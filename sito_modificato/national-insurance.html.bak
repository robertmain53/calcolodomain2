    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (!isFinite(value)) return "£0.00";
        return "£" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function getAnnualFromPeriod(amount, freq) {
        switch (freq) {
          case "weekly":
            return amount * 52;
          case "monthly":
            return amount * 12;
          case "annual":
            return amount;
          default:
            return amount;
        }
      }

      function getPeriodFromAnnual(annual, freq) {
        switch (freq) {
          case "weekly":
            return annual / 52;
          case "monthly":
            return annual / 12;
          case "annual":
            return annual;
          default:
            return annual;
        }
      }

      function calculateEmployeeNI(annualPay, settings) {
        const PT = settings.c1Primary;
        const UEL = settings.c1Upper;
        const rMain = settings.c1RateMain / 100;
        const rUpper = settings.c1RateUpper / 100;

        const mainBand = Math.max(0, Math.min(annualPay, UEL) - PT);
        const upperBand = Math.max(0, annualPay - UEL);

        return mainBand * rMain + upperBand * rUpper;
      }

      function calculateEmployerNI(annualPay, settings) {
        const ST = settings.c1EmployerThresh;
        const rEmp = settings.c1EmployerRate / 100;
        const band = Math.max(0, annualPay - ST);
        return band * rEmp;
      }

      function calculateSelfEmployedNI(annualProfits, settings) {
        const smallProfits = settings.c2SmallProfits;
        const c2Weekly = settings.c2RateWeekly;
        const LPL = settings.c4Lower;
        const UPL = settings.c4Upper;
        const rMain = settings.c4RateMain / 100;
        const rUpper = settings.c4RateUpper / 100;

        let class2 = 0;
        if (annualProfits >= smallProfits) {
          class2 = c2Weekly * 52;
        }

        const mainBand = Math.max(0, Math.min(annualProfits, UPL) - LPL);
        const upperBand = Math.max(0, annualProfits - UPL);
        const class4 = mainBand * rMain + upperBand * rUpper;

        return { class2, class4, total: class2 + class4 };
      }

      function readSettings() {
        return {
          c1Primary:
            parseFloat(document.getElementById("c1Primary").value) || 0,
          c1Upper: parseFloat(document.getElementById("c1Upper").value) || 0,
          c1RateMain:
            parseFloat(document.getElementById("c1RateMain").value) || 0,
          c1RateUpper:
            parseFloat(document.getElementById("c1RateUpper").value) || 0,
          c1EmployerRate:
            parseFloat(document.getElementById("c1EmployerRate").value) || 0,
          c1EmployerThresh:
            parseFloat(document.getElementById("c1EmployerThresh").value) || 0,
          c2SmallProfits:
            parseFloat(document.getElementById("c2SmallProfits").value) || 0,
          c2RateWeekly:
            parseFloat(document.getElementById("c2RateWeekly").value) || 0,
          c4Lower: parseFloat(document.getElementById("c4Lower").value) || 0,
          c4Upper: parseFloat(document.getElementById("c4Upper").value) || 0,
          c4RateMain:
            parseFloat(document.getElementById("c4RateMain").value) || 0,
          c4RateUpper:
            parseFloat(document.getElementById("c4RateUpper").value) || 0,
        };
      }

      function runCalculation() {
        const employmentType = document.getElementById("employmentType").value;
        const payFrequency = document.getElementById("payFrequency").value;
        const grossPayInput = parseFloat(
          document.getElementById("grossPay").value
        );

        const resultsPanel = document.getElementById("resultsPanel");
        const resultsSummary = document.getElementById("resultsSummary");
        const employeeNiDisplay = document.getElementById("employeeNiDisplay");
        const employerNiDisplay = document.getElementById("employerNiDisplay");
        const employerNiBlock = document.getElementById("employerNiBlock");
        const selfEmployedBreakdown = document.getElementById(
          "selfEmployedBreakdown"
        );
        const class2Display = document.getElementById("class2Display");
        const class4Display = document.getElementById("class4Display");
        const takeHomeDisplay = document.getElementById("takeHomeDisplay");
        const effectiveRateDisplay = document.getElementById(
          "effectiveRateDisplay"
        );
        const annualNiDisplay = document.getElementById("annualNiDisplay");
        const employeeNiPeriodLabel = document.getElementById(
          "employeeNiPeriodLabel"
        );
        const employerNiPeriodLabel = document.getElementById(
          "employerNiPeriodLabel"
        );
        const takeHomePeriodLabel = document.getElementById(
          "takeHomePeriodLabel"
        );

        if (!isFinite(grossPayInput) || grossPayInput < 0) {
          resultsPanel.classList.add("hidden");
          resultsSummary.textContent =
            "Please enter a valid gross pay amount (zero or positive number).";
          return;
        }

        const settings = readSettings();
        const annualPay = getAnnualFromPeriod(grossPayInput, payFrequency);

        let annualEmployeeNI = 0;
        let annualEmployerNI = 0;
        let class2 = 0;
        let class4 = 0;

        if (employmentType === "employee" || employmentType === "director") {
          annualEmployeeNI = calculateEmployeeNI(annualPay, settings);
          annualEmployerNI = calculateEmployerNI(annualPay, settings);
          selfEmployedBreakdown.classList.add("hidden");
          employerNiBlock.classList.remove("hidden");
        } else if (employmentType === "self") {
          const selfRes = calculateSelfEmployedNI(annualPay, settings);
          class2 = selfRes.class2;
          class4 = selfRes.class4;
          annualEmployeeNI = selfRes.total;
          annualEmployerNI = 0;
          selfEmployedBreakdown.classList.remove("hidden");
          employerNiBlock.classList.add("hidden");
          class2Display.textContent = formatCurrency(
            getPeriodFromAnnual(class2, payFrequency)
          );
          class4Display.textContent = formatCurrency(
            getPeriodFromAnnual(class4, payFrequency)
          );
        }

        const periodEmployeeNI = getPeriodFromAnnual(
          annualEmployeeNI,
          payFrequency
        );
        const periodEmployerNI = getPeriodFromAnnual(
          annualEmployerNI,
          payFrequency
        );
        const takeHome = grossPayInput - periodEmployeeNI;
        const effectiveRate =
          grossPayInput > 0 ? (periodEmployeeNI / grossPayInput) * 100 : 0;

        employeeNiDisplay.textContent = formatCurrency(periodEmployeeNI);
        employeeNiPeriodLabel.textContent = `per ${payFrequency}`;
        employerNiDisplay.textContent = formatCurrency(periodEmployerNI);
        employerNiPeriodLabel.textContent = `per ${payFrequency}`;
        takeHomeDisplay.textContent = formatCurrency(takeHome);
        takeHomePeriodLabel.textContent = `per ${payFrequency} (NI only, income tax not included)`;
        effectiveRateDisplay.textContent = effectiveRate.toFixed(1) + "%";
        annualNiDisplay.textContent = formatCurrency(annualEmployeeNI);

        resultsSummary.textContent = `Based on your ${payFrequency} gross pay of ${formatCurrency(
          grossPayInput
        )}, here is your estimated National Insurance.`;
        resultsPanel.classList.remove("hidden");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", runCalculation);
      document
        .getElementById("employmentType")
        .addEventListener("change", runCalculation);
      document
        .getElementById("payFrequency")
        .addEventListener("change", runCalculation);
      document.getElementById("grossPay").addEventListener("input", () => {
        // Debounce-like quick feedback without heavy recompute
      });

      // Initial calculation with defaults
      window.addEventListener("DOMContentLoaded", runCalculation);
    </script>

