    <script>
      (function () {
        // Mobile menu toggle
        const mobileToggle = document.getElementById("mobile-menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileToggle && mobileMenu) {
          mobileToggle.addEventListener("click", () => {
            const isHidden = mobileMenu.classList.contains("hidden");
            mobileMenu.classList.toggle("hidden", !isHidden);
            mobileToggle.setAttribute(
              "aria-expanded",
              isHidden ? "true" : "false"
            );
          });
        }

        const dividendInput = document.getElementById("dividend-input");
        const divisorInput = document.getElementById("divisor-input");
        const errorEl = document.getElementById("division-error");

        const resultQuotient = document.getElementById("result-quotient");
        const resultRemainder = document.getElementById("result-remainder");
        const resultDecimal = document.getElementById("result-decimal");

        const stepsBody = document.getElementById("steps-table-body");

        const btnDivide = document.getElementById("btn-divide");
        const btnClear = document.getElementById("btn-clear");
        const btnExample = document.getElementById("btn-example");

        function resetResults() {
          resultQuotient.textContent = "—";
          resultRemainder.textContent = "—";
          resultDecimal.textContent = "—";
          stepsBody.innerHTML =
            '<tr><td colspan="6" class="px-3 py-3 text-center text-gray-500">Enter a dividend and divisor, then click “Calculate long division” to see all steps here.</td></tr>';
        }

        function showError(msg) {
          errorEl.textContent = msg;
          errorEl.classList.remove("hidden");
        }

        function clearError() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
        }

        function computeLongDivision(dividendStr, divisorStr) {
          clearError();
          stepsBody.innerHTML = "";

          if (!/^[0-9]+$/.test(dividendStr)) {
            showError(
              "Dividend must be a positive whole number (digits only, no decimals or sign)."
            );
            resetResults();
            return;
          }
          if (!/^[0-9]+$/.test(divisorStr)) {
            showError(
              "Divisor must be a positive whole number (digits only, no decimals or sign)."
            );
            resetResults();
            return;
          }

          // Limit size to keep arithmetic reliable
          if (dividendStr.length > 12 || divisorStr.length > 9) {
            showError(
              "For transparency and numerical stability, please use up to 12 digits for the dividend and 9 digits for the divisor."
            );
            resetResults();
            return;
          }

          const divisor = parseInt(divisorStr, 10);
          if (divisor === 0) {
            showError(
              "Division by zero is undefined. Please enter a divisor greater than zero."
            );
            resetResults();
            return;
          }

          const dividend = parseInt(dividendStr, 10);

          const digits = dividendStr.split("").map(function (ch) {
            return ch.charCodeAt(0) - 48;
          });
          let partial = 0;
          const steps = [];
          const quotientDigits = [];

          for (let i = 0; i < digits.length; i++) {
            const digit = digits[i];
            partial = partial * 10 + digit;

            if (partial < divisor) {
              quotientDigits.push(0);
              steps.push({
                step: steps.length + 1,
                partialDividend: partial,
                quotientDigit: 0,
                product: 0,
                remainder: partial,
                explanation:
                  "Divisor " +
                  divisor +
                  " does not fit into " +
                  partial +
                  " (quotient digit 0, bring down next digit).",
              });
            } else {
              const qDigit = Math.floor(partial / divisor);
              const product = qDigit * divisor;
              const remainder = partial - product;
              steps.push({
                step: steps.length + 1,
                partialDividend: partial,
                quotientDigit: qDigit,
                product: product,
                remainder: remainder,
                explanation:
                  divisor +
                  " fits into " +
                  partial +
                  " exactly " +
                  qDigit +
                  " time(s): " +
                  divisor +
                  " × " +
                  qDigit +
                  " = " +
                  product +
                  ", remainder " +
                  remainder +
                  ".",
              });
              quotientDigits.push(qDigit);
              partial = remainder;
            }
          }

          // Build quotient string and normalize leading zeros
          let quotientStr = quotientDigits.join("");
          quotientStr = quotientStr.replace(/^0+/, "");
          if (quotientStr === "") {
            quotientStr = "0";
          }

          const remainderFinal = partial;

          // Summary results
          resultQuotient.textContent = quotientStr;
          resultRemainder.textContent = remainderFinal.toString();
          const decimalApprox = dividend / divisor;
          resultDecimal.textContent = decimalApprox.toFixed(6);

          // Step table
          if (steps.length === 0) {
            stepsBody.innerHTML =
              '<tr><td colspan="6" class="px-3 py-3 text-center text-gray-500">No steps to display.</td></tr>';
          } else {
            const frag = document.createDocumentFragment();
            steps.forEach(function (step) {
              const tr = document.createElement("tr");

              const tdStep = document.createElement("td");
              tdStep.className =
                "px-3 py-2 border-t border-gray-100 text-gray-700";
              tdStep.textContent = step.step;

              const tdPartial = document.createElement("td");
              tdPartial.className =
                "px-3 py-2 border-t border-gray-100 mono-box";
              tdPartial.textContent = step.partialDividend;

              const tdQDigit = document.createElement("td");
              tdQDigit.className =
                "px-3 py-2 border-t border-gray-100 mono-box";
              tdQDigit.textContent = step.quotientDigit;

              const tdProduct = document.createElement("td");
              tdProduct.className =
                "px-3 py-2 border-t border-gray-100 mono-box";
              tdProduct.textContent = step.product;

              const tdRemainder = document.createElement("td");
              tdRemainder.className =
                "px-3 py-2 border-t border-gray-100 mono-box";
              tdRemainder.textContent = step.remainder;

              const tdExplanation = document.createElement("td");
              tdExplanation.className =
                "px-3 py-2 border-t border-gray-100 text-gray-700";
              tdExplanation.textContent = step.explanation;

              tr.appendChild(tdStep);
              tr.appendChild(tdPartial);
              tr.appendChild(tdQDigit);
              tr.appendChild(tdProduct);
              tr.appendChild(tdRemainder);
              tr.appendChild(tdExplanation);

              frag.appendChild(tr);
            });
            stepsBody.appendChild(frag);
          }
        }

        btnDivide.addEventListener("click", function () {
          const dividendStr = dividendInput.value.trim();
          const divisorStr = divisorInput.value.trim();
          computeLongDivision(dividendStr, divisorStr);
        });

        btnClear.addEventListener("click", function () {
          dividendInput.value = "";
          divisorInput.value = "";
          clearError();
          resetResults();
        });

        btnExample.addEventListener("click", function () {
          dividendInput.value = "154";
          divisorInput.value = "7";
          clearError();
          computeLongDivision("154", "7");
        });

        // Allow Enter to trigger calculation
        [dividendInput, divisorInput].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              btnDivide.click();
            }
          });
        });

        // Initialize
        resetResults();
      })();
    </script>

