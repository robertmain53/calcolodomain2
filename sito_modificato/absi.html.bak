    <script>
      // Unit toggle and labels
      const unitButtons = document.querySelectorAll(".unit-toggle");
      const heightLabel = document.getElementById("height-unit-label");
      const weightLabel = document.getElementById("weight-unit-label");
      const waistLabel = document.getElementById("waist-unit-label");
      let currentUnits = "metric"; // 'metric' or 'imperial'

      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const isMetric = btn.id === "units-metric";
          currentUnits = isMetric ? "metric" : "imperial";

          unitButtons.forEach((b) => {
            const active = b === btn;
            b.classList.toggle("bg-blue-600", active);
            b.classList.toggle("text-white", active);
            b.classList.toggle("text-gray-700", !active);
            b.setAttribute("aria-pressed", active ? "true" : "false");
          });

          if (currentUnits === "metric") {
            heightLabel.textContent = "(cm)";
            weightLabel.textContent = "(kg)";
            waistLabel.textContent = "(cm)";
          } else {
            heightLabel.textContent = "(ft / in total inches)";
            weightLabel.textContent = "(lb)";
            waistLabel.textContent = "(in)";
          }
        });
      });

      function toMetricHeight(value) {
        if (!value || isNaN(value)) return NaN;
        if (currentUnits === "metric") {
          return value / 100; // cm -> m
        } else {
          return value * 0.0254; // inches -> m
        }
      }

      function toMetricWeight(value) {
        if (!value || isNaN(value)) return NaN;
        if (currentUnits === "metric") {
          return value; // kg
        } else {
          return value * 0.45359237; // lb -> kg
        }
      }

      function toMetricWaist(value) {
        if (!value || isNaN(value)) return NaN;
        if (currentUnits === "metric") {
          return value / 100; // cm -> m
        } else {
          return value * 0.0254; // inches -> m
        }
      }

      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      const calcBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorMessage = document.getElementById("error-message");
      const resultsSection = document.getElementById("results-section");

      const bmiResult = document.getElementById("bmi-result");
      const whrResult = document.getElementById("whr-result");
      const absiResult = document.getElementById("absi-result");
      const absiZResult = document.getElementById("absi-z-result");
      const riskLabel = document.getElementById("risk-label");
      const riskDesc = document.getElementById("risk-description");

      calcBtn.addEventListener("click", () => {
        errorMessage.textContent = "";

        const heightInput = parseFloat(document.getElementById("height").value);
        const weightInput = parseFloat(document.getElementById("weight").value);
        const waistInput = parseFloat(document.getElementById("waist").value);

        const h = toMetricHeight(heightInput);
        const w = toMetricWeight(weightInput);
        const wc = toMetricWaist(waistInput);

        if (
          !isFinite(h) ||
          !isFinite(w) ||
          !isFinite(wc) ||
          h <= 0 ||
          w <= 0 ||
          wc <= 0
        ) {
          errorMessage.textContent =
            "Please enter valid positive values for height, weight and waist circumference.";
          resultsSection.classList.add("hidden");
          return;
        }

        if (h < 0.9 || h > 2.3) {
          errorMessage.textContent =
            "Height seems out of typical adult range. Please check your units.";
          resultsSection.classList.add("hidden");
          return;
        }

        const bmi = w / (h * h);
        const whr = wc / h;

        // ABSI formula
        const absi = wc / (Math.pow(bmi, 2 / 3) * Math.sqrt(h));

        // Approximate z-score using assumed mean and SD
        const meanABSI = 0.08;
        const sdABSI = 0.005;
        const z = (absi - meanABSI) / sdABSI;

        // Populate results
        bmiResult.textContent = isFinite(bmi) ? round(bmi, 1).toFixed(1) : "–";
        whrResult.textContent = isFinite(whr) ? round(whr, 2).toFixed(2) : "–";
        absiResult.textContent = isFinite(absi)
          ? round(absi, 5).toFixed(5)
          : "–";
        absiZResult.textContent = isFinite(z) ? round(z, 2).toFixed(2) : "–";

        // Risk category based on z-score
        let label = "Average risk (approx.)";
        let desc =
          "Your ABSI is close to the assumed population average. Central obesity appears typical for your overall body size.";
        let color = "text-blue-700";

        if (z < -0.5) {
          label = "Lower-than-average central obesity (approx.)";
          desc =
            "Your ABSI is below the assumed average, suggesting relatively less abdominal fat for your body size. This is generally favorable, but very low values can also reflect low overall mass.";
          color = "text-green-700";
        } else if (z >= 0.5 && z < 1.0) {
          label = "Elevated central obesity (approx.)";
          desc =
            "Your ABSI is moderately above the assumed average. Studies associate this pattern with increased cardiometabolic and mortality risk compared with average values.";
          color = "text-yellow-700";
        } else if (z >= 1.0) {
          label = "High central obesity / risk (approx.)";
          desc =
            "Your ABSI is substantially above the assumed average. Research links this pattern of central fat distribution with higher mortality risk. Consider discussing lifestyle and risk factors with a healthcare professional.";
          color = "text-red-700";
        }

        riskLabel.textContent = label;
        riskLabel.className = "text-base font-bold mb-1 " + color;
        riskDesc.textContent = desc;

        resultsSection.classList.remove("hidden");
      });

      resetBtn.addEventListener("click", () => {
        document.getElementById("absi-form").reset();
        errorMessage.textContent = "";
        resultsSection.classList.add("hidden");
      });
    </script>

