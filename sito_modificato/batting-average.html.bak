    <script>
      // Utility functions
      function safeNumber(value) {
        const n = parseFloat(value);
        return isNaN(n) ? 0 : n;
      }

      function formatBADecimal(h, ab) {
        if (ab <= 0) return 0;
        return h / ab;
      }

      function formatBAThreeDigits(decimal) {
        if (!isFinite(decimal) || decimal <= 0) return ".000";
        const rounded = Math.round(decimal * 1000) / 1000;
        return "." + rounded.toFixed(3).split(".")[1];
      }

      function formatPercent(decimal) {
        if (!isFinite(decimal) || decimal <= 0) return "0.0%";
        return (decimal * 100).toFixed(1) + "%";
      }

      // Mode switching
      const modeSimpleBtn = document.getElementById("mode-simple");
      const modeMultiBtn = document.getElementById("mode-multi");
      const modeCompareBtn = document.getElementById("mode-compare");
      const simplePanel = document.getElementById("simple-panel");
      const multiPanel = document.getElementById("multi-panel");
      const comparePanel = document.getElementById("compare-panel");

      function setMode(mode) {
        // Reset button styles
        [modeSimpleBtn, modeMultiBtn, modeCompareBtn].forEach((btn) => {
          btn.classList.remove("bg-blue-600", "text-white", "border-blue-600");
          btn.classList.add("border-gray-300", "text-gray-700");
        });

        // Hide all panels
        simplePanel.classList.add("hidden");
        multiPanel.classList.add("hidden");
        comparePanel.classList.add("hidden");

        if (mode === "simple") {
          modeSimpleBtn.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          modeSimpleBtn.classList.remove("border-gray-300", "text-gray-700");
          simplePanel.classList.remove("hidden");
        } else if (mode === "multi") {
          modeMultiBtn.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          modeMultiBtn.classList.remove("border-gray-300", "text-gray-700");
          multiPanel.classList.remove("hidden");
        } else if (mode === "compare") {
          modeCompareBtn.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          modeCompareBtn.classList.remove("border-gray-300", "text-gray-700");
          comparePanel.classList.remove("hidden");
        }
      }

      modeSimpleBtn.addEventListener("click", () => setMode("simple"));
      modeMultiBtn.addEventListener("click", () => setMode("multi"));
      modeCompareBtn.addEventListener("click", () => setMode("compare"));

      // Simple mode logic
      const simpleHitsInput = document.getElementById("simple-hits");
      const simpleAbInput = document.getElementById("simple-ab");
      const simpleBaDisplay = document.getElementById("simple-ba-display");
      const simpleBaDecimal = document.getElementById("simple-ba-decimal");
      const simpleBaPercent = document.getElementById("simple-ba-percent");
      const simpleResetBtn = document.getElementById("simple-reset");

      function updateSimple() {
        const h = safeNumber(simpleHitsInput.value);
        const ab = safeNumber(simpleAbInput.value);
        const ba = formatBADecimal(h, ab);
        simpleBaDisplay.textContent = formatBAThreeDigits(ba);
        simpleBaDecimal.textContent = ba.toFixed(3);
        simpleBaPercent.textContent = formatPercent(ba);
      }

      [simpleHitsInput, simpleAbInput].forEach((input) => {
        input.addEventListener("input", updateSimple);
      });

      simpleResetBtn.addEventListener("click", () => {
        simpleHitsInput.value = "0";
        simpleAbInput.value = "0";
        updateSimple();
      });

      // Multi-game mode logic
      const gamesBody = document.getElementById("games-body");
      const addGameRowBtn = document.getElementById("add-game-row");
      const clearGamesBtn = document.getElementById("clear-games");
      const gamesTotalH = document.getElementById("games-total-h");
      const gamesTotalAb = document.getElementById("games-total-ab");
      const gamesTotalBa = document.getElementById("games-total-ba");

      let gameRowId = 0;

      function createGameRow(labelText) {
        const rowId = ++gameRowId;
        const row = document.createElement("div");
        row.className =
          "grid grid-cols-12 items-center px-3 py-2 border-t border-gray-100 text-sm";
        row.dataset.rowId = rowId;

        row.innerHTML = `
      <div class="col-span-4 pr-2">
        <input type="text" class="w-full border border-gray-200 rounded-md px-2 py-1 text-xs" placeholder="Game ${rowId}" value="${
          labelText || ""
        }">
      </div>
      <div class="col-span-3 text-right pr-2">
        <input type="number" min="0" step="1" class="w-20 text-right border border-gray-200 rounded-md px-2 py-1 text-sm game-hits" value="0">
      </div>
      <div class="col-span-3 text-right pr-2">
        <input type="number" min="0" step="1" class="w-20 text-right border border-gray-200 rounded-md px-2 py-1 text-sm game-ab" value="0">
      </div>
      <div class="col-span-2 text-right flex items-center justify-end gap-2">
        <span class="inline-block text-blue-600 font-semibold game-ba">.000</span>
        <button type="button" class="text-gray-400 hover:text-red-500 text-xs remove-game-row" title="Remove row">&times;</button>
      </div>
    `;

        gamesBody.appendChild(row);
        attachGameRowEvents(row);
        updateGamesTotals();
      }

      function attachGameRowEvents(row) {
        const hitsInput = row.querySelector(".game-hits");
        const abInput = row.querySelector(".game-ab");
        const removeBtn = row.querySelector(".remove-game-row");

        function updateRow() {
          const h = safeNumber(hitsInput.value);
          const ab = safeNumber(abInput.value);
          const ba = formatBADecimal(h, ab);
          row.querySelector(".game-ba").textContent = formatBAThreeDigits(ba);
          updateGamesTotals();
        }

        hitsInput.addEventListener("input", updateRow);
        abInput.addEventListener("input", updateRow);
        removeBtn.addEventListener("click", () => {
          row.remove();
          updateGamesTotals();
        });
      }

      function updateGamesTotals() {
        let totalH = 0;
        let totalAb = 0;
        gamesBody.querySelectorAll(".game-hits").forEach((input) => {
          totalH += safeNumber(input.value);
        });
        gamesBody.querySelectorAll(".game-ab").forEach((input) => {
          totalAb += safeNumber(input.value);
        });
        gamesTotalH.textContent = totalH;
        gamesTotalAb.textContent = totalAb;
        gamesTotalBa.textContent = formatBAThreeDigits(
          formatBADecimal(totalH, totalAb)
        );
      }

      addGameRowBtn.addEventListener("click", () => createGameRow(""));
      clearGamesBtn.addEventListener("click", () => {
        gamesBody.innerHTML = "";
        updateGamesTotals();
      });

      // Initialize with one row
      createGameRow("Game 1");

      // Compare players mode logic
      const compareBody = document.getElementById("compare-body");
      const addPlayerRowBtn = document.getElementById("add-player-row");
      const clearPlayersBtn = document.getElementById("clear-players");
      let playerRowId = 0;
      const maxPlayers = 4;

      function createPlayerRow(defaultLabel) {
        if (compareBody.children.length >= maxPlayers) return;
        const rowId = ++playerRowId;
        const row = document.createElement("tr");
        row.dataset.rowId = rowId;
        row.className = "border-t border-gray-100";

        row.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border border-gray-200 rounded-md px-2 py-1 text-xs" placeholder="Player ${rowId}" value="${
          defaultLabel || ""
        }">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="1" class="w-20 text-right border border-gray-200 rounded-md px-2 py-1 text-sm compare-hits" value="0">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="1" class="w-20 text-right border border-gray-200 rounded-md px-2 py-1 text-sm compare-ab" value="0">
      </td>
      <td class="px-3 py-2 text-right">
        <span class="inline-block text-blue-600 font-semibold compare-ba">.000</span>
        <button type="button" class="ml-2 text-gray-400 hover:text-red-500 text-xs remove-player-row" title="Remove row">&times;</button>
      </td>
    `;

        compareBody.appendChild(row);
        attachPlayerRowEvents(row);
      }

      function attachPlayerRowEvents(row) {
        const hitsInput = row.querySelector(".compare-hits");
        const abInput = row.querySelector(".compare-ab");
        const removeBtn = row.querySelector(".remove-player-row");
        const baSpan = row.querySelector(".compare-ba");

        function updateRow() {
          const h = safeNumber(hitsInput.value);
          const ab = safeNumber(abInput.value);
          const ba = formatBADecimal(h, ab);
          baSpan.textContent = formatBAThreeDigits(ba);
        }

        hitsInput.addEventListener("input", updateRow);
        abInput.addEventListener("input", updateRow);
        removeBtn.addEventListener("click", () => {
          row.remove();
        });
      }

      addPlayerRowBtn.addEventListener("click", () => createPlayerRow(""));
      clearPlayersBtn.addEventListener("click", () => {
        compareBody.innerHTML = "";
        playerRowId = 0;
        createPlayerRow("Player 1");
        createPlayerRow("Player 2");
      });

      // Initialize compare mode with two players
      createPlayerRow("Player 1");
      createPlayerRow("Player 2");

      // Initial simple mode update
      updateSimple();
    </script>

