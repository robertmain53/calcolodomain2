<script>
  // Utility functions
  function hmsToSeconds(h, m, s) {
    h = Number(h) || 0;
    m = Number(m) || 0;
    s = Number(s) || 0;
    return h * 3600 + m * 60 + s;
  }

  function secondsToHMS(totalSeconds) {
    totalSeconds = Math.max(0, Math.round(totalSeconds));
    const h = Math.floor(totalSeconds / 3600);
    const m = Math.floor((totalSeconds % 3600) / 60);
    const s = totalSeconds % 60;
    return { h, m, s };
  }

  function formatHMS(totalSeconds) {
    const t = secondsToHMS(totalSeconds);
    const hh = t.h.toString().padStart(1, '0');
    const mm = t.m.toString().padStart(2, '0');
    const ss = t.s.toString().padStart(2, '0');
    return (t.h > 0 ? hh + ':' : '') + mm + ':' + ss;
  }

  function formatPace(secondsPerUnit) {
    if (!isFinite(secondsPerUnit) || secondsPerUnit <= 0) return '–';
    const m = Math.floor(secondsPerUnit / 60);
    const s = Math.round(secondsPerUnit % 60);
    return m + ':' + s.toString().padStart(2, '0');
  }

  function formatNumber(n, decimals) {
    return Number(n).toFixed(decimals);
  }

  document.addEventListener('DOMContentLoaded', function () {
    const modeButtons = document.querySelectorAll('[data-mode]');
    const unitKmBtn = document.getElementById('unit-km');
    const unitMiBtn = document.getElementById('unit-mi');
    const distanceUnitSelect = document.getElementById('distance-unit');
    const distancePreset = document.getElementById('distance-preset');

    const timeGroup = document.getElementById('time-input-group');
    const paceGroup = document.getElementById('pace-input-group');
    const paceUnitLabel = document.getElementById('pace-unit-label');

    const calcBtn = document.getElementById('calculate-btn');
    const resetBtn = document.getElementById('reset-btn');
    const errorMsg = document.getElementById('error-msg');

    const resultsSection = document.getElementById('results-section');
    const resultPaceMain = document.getElementById('result-pace-main');
    const resultPaceAlt = document.getElementById('result-pace-alt');
    const resultSpeedMain = document.getElementById('result-speed-main');
    const resultSpeedAlt = document.getElementById('result-speed-alt');
    const resultDistance = document.getElementById('result-distance');
    const resultTime = document.getElementById('result-time');

    const generateChartBtn = document.getElementById('generate-chart-btn');
    const buildChartBtn = document.getElementById('build-chart-btn');
    const chartDistance = document.getElementById('chart-distance');
    const chartUnit = document.getElementById('chart-unit');
    const chartSplit = document.getElementById('chart-split');
    const chartPaceM = document.getElementById('chart-pace-m');
    const chartPaceS = document.getElementById('chart-pace-s');
    const paceChartContainer = document.getElementById('pace-chart-container');
    const paceChartBody = document.getElementById('pace-chart-body');

    let currentMode = 'pace'; // 'pace', 'time', 'distance'
    let currentUnit = 'km';   // 'km' or 'mi'

    function setMode(mode) {
      currentMode = mode;
      modeButtons.forEach(btn => {
        if (btn.dataset.mode === mode) {
          btn.classList.add('tab-active');
          btn.setAttribute('aria-selected', 'true');
        } else {
          btn.classList.remove('tab-active');
          btn.setAttribute('aria-selected', 'false');
        }
      });

      if (mode === 'pace') {
        timeGroup.classList.remove('hidden');
        paceGroup.classList.add('hidden');
      } else if (mode === 'time') {
        timeGroup.classList.add('hidden');
        paceGroup.classList.remove('hidden');
      } else if (mode === 'distance') {
        timeGroup.classList.remove('hidden');
        paceGroup.classList.remove('hidden');
      }
      errorMsg.textContent = '';
    }

    function setUnit(unit) {
      currentUnit = unit;
      if (unit === 'km') {
        unitKmBtn.classList.add('border-blue-600', 'text-blue-600', 'bg-blue-50');
        unitKmBtn.classList.remove('border-gray-300', 'text-gray-700', 'bg-white');
        unitMiBtn.classList.add('border-gray-300', 'text-gray-700', 'bg-white');
        unitMiBtn.classList.remove('border-blue-600', 'text-blue-600', 'bg-blue-50');
        distanceUnitSelect.value = 'km';
        paceUnitLabel.textContent = 'per km';
      } else {
        unitMiBtn.classList.add('border-blue-600', 'text-blue-600', 'bg-blue-50');
        unitMiBtn.classList.remove('border-gray-300', 'text-gray-700', 'bg-white');
        unitKmBtn.classList.add('border-gray-300', 'text-gray-700', 'bg-white');
        unitKmBtn.classList.remove('border-blue-600', 'text-blue-600', 'bg-blue-50');
        distanceUnitSelect.value = 'mi';
        paceUnitLabel.textContent = 'per mile';
      }
    }

    modeButtons.forEach(btn => {
      btn.addEventListener('click', () => setMode(btn.dataset.mode));
    });

    unitKmBtn.addEventListener('click', () => setUnit('km'));
    unitMiBtn.addEventListener('click', () => setUnit('mi'));

    distanceUnitSelect.addEventListener('change', () => {
      const val = distanceUnitSelect.value;
      setUnit(val === 'km' ? 'km' : 'mi');
    });

    distancePreset.addEventListener('change', () => {
      const val = distancePreset.value;
      if (!val) return;
      const opt = distancePreset.options[distancePreset.selectedIndex];
      const optUnit = opt.getAttribute('data-unit');
      if (optUnit === 'mi') {
        setUnit('mi');
        distanceUnitSelect.value = 'mi';
        document.getElementById('distance').value = 1; // 1 mile
      } else {
        document.getElementById('distance').value = parseFloat(val);
      }
    });

    function validateInputs() {
      const dist = parseFloat(document.getElementById('distance').value);
      const tSec = hmsToSeconds(
        document.getElementById('time-h').value,
        document.getElementById('time-m').value,
        document.getElementById('time-s').value
      );
      const paceM = parseFloat(document.getElementById('pace-m').value);
      const paceS = parseFloat(document.getElementById('pace-s').value);
      const paceSec = (paceM || 0) * 60 + (paceS || 0);

      if (currentMode === 'pace') {
        if (!dist || dist <= 0) return { ok: false, msg: 'Enter a distance greater than zero.' };
        if (!tSec || tSec <= 0) return { ok: false, msg: 'Enter a valid time.' };
      } else if (currentMode === 'time') {
        if (!dist || dist <= 0) return { ok: false, msg: 'Enter a distance greater than zero.' };
        if (!paceSec || paceSec <= 0) return { ok: false, msg: 'Enter a valid pace.' };
      } else if (currentMode === 'distance') {
        if (!tSec || tSec <= 0) return { ok: false, msg: 'Enter a valid time.' };
        if (!paceSec || paceSec <= 0) return { ok: false, msg: 'Enter a valid pace.' };
      }
      return { ok: true, dist, tSec, paceSec };
    }

    function calculate() {
      const v = validateInputs();
      if (!v.ok) {
        errorMsg.textContent = v.msg;
        resultsSection.classList.add('hidden');
        return;
      }
      errorMsg.textContent = '';

      let dist = v.dist || 0;
      let tSec = v.tSec || 0;
      let paceSec = v.paceSec || 0;

      if (currentMode === 'pace') {
        paceSec = tSec / dist;
      } else if (currentMode === 'time') {
        tSec = dist * paceSec;
      } else if (currentMode === 'distance') {
        dist = tSec / paceSec;
      }

      const paceMain = formatPace(paceSec);
      const speedMain = 3600 / paceSec; // units per hour

      let paceAlt, speedAlt;
      if (currentUnit === 'km') {
        const pacePerMileSec = paceSec * 1.609344;
        paceAlt = formatPace(pacePerMileSec) + ' per mile';
        const mph = speedMain / 1.609344;
        speedAlt = formatNumber(mph, 2) + ' mph';
        resultPaceMain.textContent = paceMain + ' per km';
        resultSpeedMain.textContent = formatNumber(speedMain, 2) + ' km/h';
      } else {
        const pacePerKmSec = paceSec / 1.609344;
        paceAlt = formatPace(pacePerKmSec) + ' per km';
        const kmh = speedMain * 1.609344;
        speedAlt = formatNumber(kmh, 2) + ' km/h';
        resultPaceMain.textContent = paceMain + ' per mile';
        resultSpeedMain.textContent = formatNumber(speedMain, 2) + ' mph';
      }

      resultPaceAlt.textContent = paceAlt;
      resultSpeedAlt.textContent = speedAlt;

      resultDistance.textContent = dist.toFixed(2) + ' ' + (currentUnit === 'km' ? 'km' : 'miles');
      resultTime.textContent = formatHMS(tSec);

      resultsSection.classList.remove('hidden');
    }

    calcBtn.addEventListener('click', calculate);

    resetBtn.addEventListener('click', () => {
      document.getElementById('distance').value = '';
      document.getElementById('time-h').value = '';
      document.getElementById('time-m').value = '';
      document.getElementById('time-s').value = '';
      document.getElementById('pace-m').value = '';
      document.getElementById('pace-s').value = '';
      distancePreset.value = '';
      errorMsg.textContent = '';
      resultsSection.classList.add('hidden');
      paceChartContainer.classList.add('hidden');
      paceChartBody.innerHTML = '';
    });

    // Pace chart
    function buildChart() {
      const dist = parseFloat(chartDistance.value);
      const unit = chartUnit.value;
      const split = parseFloat(chartSplit.value);
      const paceM = parseFloat(chartPaceM.value);
      const paceS = parseFloat(chartPaceS.value);
      const paceSec = (paceM || 0) * 60 + (paceS || 0);

      if (!dist || dist <= 0 || !paceSec || paceSec <= 0 || !split || split <= 0) {
        alert('Enter a valid distance, split and pace for the chart.');
        return;
      }

      const steps = Math.floor(dist / split + 1e-9);
      if (steps > 1000) {
        alert('Too many splits. Increase the split distance.');
        return;
      }

      paceChartBody.innerHTML = '';
      for (let i = 1; i <= steps; i++) {
        const d = i * split;
        const t = d * paceSec;
        const tr = document.createElement('tr');
        tr.innerHTML = `
          <td class="px-3 py-2 border-b border-gray-100">${i}</td>
          <td class="px-3 py-2 border-b border-gray-100">${d.toFixed(2)} ${unit}</td>
          <td class="px-3 py-2 border-b border-gray-100">${formatHMS(t)}</td>
        `;
        paceChartBody.appendChild(tr);
      }
      paceChartContainer.classList.remove('hidden');
    }

    buildChartBtn.addEventListener('click', buildChart);

    generateChartBtn.addEventListener('click', () => {
      const dist = parseFloat(document.getElementById('distance').value);
      const tSec = hmsToSeconds(
        document.getElementById('time-h').value,
        document.getElementById('time-m').value,
        document.getElementById('time-s').value
      );
      const paceM = parseFloat(document.getElementById('pace-m').value);
      const paceS = parseFloat(document.getElementById('pace-s').value);
      let paceSec = (paceM || 0) * 60 + (paceS || 0);

      if (currentMode === 'pace') {
        if (!dist || !tSec) {
          alert('Enter distance and time first, then click Calculate.');
          return;
        }
        paceSec = tSec / dist;
      } else if (currentMode === 'time') {
        if (!dist || !paceSec) {
          alert('Enter distance and pace first, then click Calculate.');
          return;
        }
      } else if (currentMode === 'distance') {
        if (!paceSec || !tSec) {
          alert('Enter time and pace first, then click Calculate.');
          return;
        }
      }

      if (!dist || dist <= 0 || !paceSec || paceSec <= 0) {
        alert('Please calculate valid distance and pace first.');
        return;
      }

      chartDistance.value = dist.toFixed(2);
      chartUnit.value = currentUnit;
      chartPaceM.value = Math.floor(paceSec / 60);
      chartPaceS.value = Math.round(paceSec % 60);
      buildChart();
    });

    // Initialize defaults
    setMode('pace');
    setUnit('km');
  });
</script>

