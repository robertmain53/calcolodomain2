    <script>
      // Utility functions
      function round(value, decimals = 0) {
        if (!isFinite(value)) return "–";
        const factor = Math.pow(10, decimals);
        return (Math.round(value * factor) / factor).toFixed(decimals);
      }

      function cmFromImperial(ft, inch) {
        return ft * 30.48 + inch * 2.54;
      }

      function kgFromLb(lb) {
        return lb * 0.45359237;
      }

      function calculateBMRs({ sex, age, heightCm, weightKg }) {
        const isMale = sex === "male";

        // Original Harris-Benedict
        let bmrOriginal;
        if (isMale) {
          bmrOriginal =
            66.47 + 13.75 * weightKg + 5.003 * heightCm - 6.755 * age;
        } else {
          bmrOriginal =
            655.1 + 9.563 * weightKg + 1.85 * heightCm - 4.676 * age;
        }

        // Revised Harris-Benedict (Roza & Shizgal)
        let bmrRevised;
        if (isMale) {
          bmrRevised =
            88.362 + 13.397 * weightKg + 4.799 * heightCm - 5.677 * age;
        } else {
          bmrRevised =
            447.593 + 9.247 * weightKg + 3.098 * heightCm - 4.33 * age;
        }

        // Mifflin-St Jeor
        const s = isMale ? 5 : -161;
        const bmrMifflin = 10 * weightKg + 6.25 * heightCm - 5 * age + s;

        return { bmrOriginal, bmrRevised, bmrMifflin };
      }

      function updateResults() {
        const sex =
          document.querySelector('input[name="sex"]:checked')?.value || "male";
        const age = parseFloat(document.getElementById("age").value);
        const activityFactor = parseFloat(
          document.getElementById("activity").value
        );

        const useMetric =
          document
            .getElementById("unit-metric")
            .getAttribute("aria-pressed") === "true";

        let heightCm, weightKg;

        if (useMetric) {
          heightCm = parseFloat(document.getElementById("height-cm").value);
          weightKg = parseFloat(document.getElementById("weight-kg").value);
        } else {
          const ft = parseFloat(document.getElementById("height-ft").value);
          const inch = parseFloat(document.getElementById("height-in").value);
          const lb = parseFloat(document.getElementById("weight-lb").value);
          heightCm = cmFromImperial(ft || 0, inch || 0);
          weightKg = kgFromLb(lb || 0);
        }

        if (!age || !heightCm || !weightKg) {
          return;
        }

        const { bmrOriginal, bmrRevised, bmrMifflin } = calculateBMRs({
          sex,
          age,
          heightCm,
          weightKg,
        });

        const maintOriginal = bmrOriginal * activityFactor;
        const maintRevised = bmrRevised * activityFactor;
        const maintMifflin = bmrMifflin * activityFactor;

        // Update comparison table
        document.getElementById("bmr-original").textContent = round(
          bmrOriginal,
          0
        );
        document.getElementById("maint-original").textContent = round(
          maintOriginal,
          0
        );
        document.getElementById("bmr-revised").textContent = round(
          bmrRevised,
          0
        );
        document.getElementById("maint-revised").textContent = round(
          maintRevised,
          0
        );
        document.getElementById("bmr-mifflin").textContent = round(
          bmrMifflin,
          0
        );
        document.getElementById("maint-mifflin").textContent = round(
          maintMifflin,
          0
        );

        // Selected formula
        const activeFormulaBtn = document.querySelector(
          '.formula-toggle[aria-pressed="true"]'
        );
        const formula = activeFormulaBtn
          ? activeFormulaBtn.getAttribute("data-formula")
          : "revised";

        let bmrSelected, maintSelected;
        if (formula === "original") {
          bmrSelected = bmrOriginal;
          maintSelected = maintOriginal;
        } else if (formula === "mifflin") {
          bmrSelected = bmrMifflin;
          maintSelected = maintMifflin;
        } else {
          bmrSelected = bmrRevised;
          maintSelected = maintRevised;
        }

        document.getElementById("bmr-main").textContent = round(bmrSelected, 0);
        document.getElementById("maintenance-main").textContent = round(
          maintSelected,
          0
        );

        const slowLoss = maintSelected - 250;
        const moderateLoss = maintSelected - 500;
        const slowGain = maintSelected + 250;

        document.getElementById("loss-slow").textContent =
          slowLoss > 0 ? round(slowLoss, 0) + " kcal/day" : "–";
        document.getElementById("loss-moderate").textContent =
          moderateLoss > 0 ? round(moderateLoss, 0) + " kcal/day" : "–";
        document.getElementById("gain-slow").textContent =
          round(slowGain, 0) + " kcal/day";

        document.getElementById("range-main").textContent =
          slowLoss > 0
            ? `${round(slowLoss, 0)}–${round(slowGain, 0)} kcal/day`
            : `${round(moderateLoss, 0)}–${round(slowGain, 0)} kcal/day`;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const unitButtons = document.querySelectorAll(".unit-toggle");
        unitButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            unitButtons.forEach((b) => {
              b.classList.remove("bg-white", "shadow-sm", "font-medium");
              b.classList.add("text-gray-600");
              b.setAttribute("aria-pressed", "false");
            });
            btn.classList.add("bg-white", "shadow-sm", "font-medium");
            btn.classList.remove("text-gray-600");
            btn.setAttribute("aria-pressed", "true");

            const useMetric = btn.id === "unit-metric";
            document
              .getElementById("height-metric-group")
              .classList.toggle("hidden", !useMetric);
            document
              .getElementById("weight-metric-group")
              .classList.toggle("hidden", !useMetric);
            document
              .getElementById("height-imperial-group")
              .classList.toggle("hidden", useMetric);
            document
              .getElementById("weight-imperial-group")
              .classList.toggle("hidden", useMetric);

            updateResults();
          });
        });

        const formulaButtons = document.querySelectorAll(".formula-toggle");
        formulaButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            formulaButtons.forEach((b) => {
              b.classList.remove("bg-white", "shadow-sm", "font-medium");
              b.classList.add("text-gray-600");
              b.setAttribute("aria-pressed", "false");
            });
            btn.classList.add("bg-white", "shadow-sm", "font-medium");
            btn.classList.remove("text-gray-600");
            btn.setAttribute("aria-pressed", "true");

            updateResults();
          });
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", function () {
            updateResults();
            const resultsSection =
              document.getElementById("hb-results-heading");
            if (resultsSection) {
              resultsSection.scrollIntoView({
                behavior: "smooth",
                block: "start",
              });
            }
          });

        document
          .getElementById("reset-btn")
          .addEventListener("click", function () {
            document.getElementById("age").value = 30;
            document.getElementById("height-cm").value = 175;
            document.getElementById("height-ft").value = 5;
            document.getElementById("height-in").value = 9;
            document.getElementById("weight-kg").value = 70;
            document.getElementById("weight-lb").value = 154;
            document.getElementById("activity").value = "1.55";
            document.querySelector(
              'input[name="sex"][value="male"]'
            ).checked = true;

            document.getElementById("unit-metric").click();
            document
              .querySelector('.formula-toggle[data-formula="revised"]')
              .click();

            updateResults();
          });

        // Auto-update on input changes for better UX
        [
          "age",
          "height-cm",
          "height-ft",
          "height-in",
          "weight-kg",
          "weight-lb",
          "activity",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", () => {
              // Debounce slightly
              clearTimeout(el._hbTimeout);
              el._hbTimeout = setTimeout(updateResults, 150);
            });
          }
        });
        document.querySelectorAll('input[name="sex"]').forEach((radio) => {
          radio.addEventListener("change", updateResults);
        });

        // Initial calculation
        updateResults();
      });

