    <script>
      // Mode switching
      const modeTabs = document.querySelectorAll(".mode-tab");
      const modeInputs = document.querySelectorAll(".mode-inputs");
      let currentMode = "diagonals";

      modeTabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const mode = tab.getAttribute("data-mode");
          currentMode = mode;
          modeTabs.forEach((t) =>
            t.classList.remove(
              "tab-active",
              "bg-blue-50",
              "text-blue-700",
              "border-blue-600"
            )
          );
          tab.classList.add(
            "tab-active",
            "bg-blue-50",
            "text-blue-700",
            "border-blue-600"
          );
          modeInputs.forEach((block) => {
            block.classList.toggle("hidden", block.id !== "inputs-" + mode);
          });
          document.getElementById("error-msg").textContent = "";
          document.getElementById("area-output").textContent = "—";
          document.getElementById("area-formula-used").textContent = "";
          document.getElementById("steps-output").textContent =
            "Enter your values and click “Calculate area” to see the working.";
        });
      });

      function getUnitLabel() {
        const unit = document.getElementById("unit-select").value;
        return unit + "\u00b2";
      }

      function formatNumber(value) {
        if (!isFinite(value)) return "—";
        if (Math.abs(value) >= 1e4 || (Math.abs(value) < 1e-2 && value !== 0)) {
          return value.toExponential(4);
        }
        return Number(value.toFixed(4)).toString();
      }

      function calculateArea() {
        const unitLabel = getUnitLabel();
        const errorEl = document.getElementById("error-msg");
        const areaEl = document.getElementById("area-output");
        const formulaEl = document.getElementById("area-formula-used");
        const stepsEl = document.getElementById("steps-output");
        errorEl.textContent = "";
        formulaEl.textContent = "";
        stepsEl.textContent = "";

        let A = null;
        let stepsHtml = "";

        if (currentMode === "diagonals") {
          const d1 = parseFloat(document.getElementById("d1").value);
          const d2 = parseFloat(document.getElementById("d2").value);
          if (!(d1 > 0) || !(d2 > 0)) {
            errorEl.textContent =
              "Please enter positive values for both diagonals.";
            areaEl.textContent = "—";
            stepsEl.textContent = "Both diagonals must be greater than zero.";
            return;
          }
          A = (d1 * d2) / 2;
          formulaEl.textContent = "Using A = (d₁ × d₂) / 2";
          stepsHtml = `
        1. Use the diagonal formula: A = (d₁ × d₂) / 2<br>
        2. Substitute: A = (${d1} × ${d2}) / 2<br>
        3. Multiply diagonals: ${d1} × ${d2} = ${formatNumber(d1 * d2)}<br>
        4. Divide by 2: A = ${formatNumber(A)} ${unitLabel}
      `;
        } else if (currentMode === "base-height") {
          const b = parseFloat(document.getElementById("base").value);
          const h = parseFloat(document.getElementById("height").value);
          if (!(b > 0) || !(h > 0)) {
            errorEl.textContent =
              "Please enter positive values for base and height.";
            areaEl.textContent = "—";
            stepsEl.textContent = "Base and height must be greater than zero.";
            return;
          }
          A = b * h;
          formulaEl.textContent = "Using A = b × h";
          stepsHtml = `
        1. Use the base–height formula: A = b × h<br>
        2. Substitute: A = ${b} × ${h}<br>
        3. Multiply: A = ${formatNumber(A)} ${unitLabel}
      `;
        } else if (currentMode === "side-angle") {
          const a = parseFloat(document.getElementById("side").value);
          const theta = parseFloat(document.getElementById("angle").value);
          const angleUnit = document.getElementById("angle-unit").value;
          if (!(a > 0) || !(theta > 0)) {
            errorEl.textContent =
              "Please enter positive values for side and angle.";
            areaEl.textContent = "—";
            stepsEl.textContent =
              "Side length and angle must be greater than zero.";
            return;
          }
          let thetaRad;
          if (angleUnit === "deg") {
            thetaRad = (theta * Math.PI) / 180;
          } else {
            thetaRad = theta;
          }
          const sinTheta = Math.sin(thetaRad);
          if (sinTheta <= 0) {
            errorEl.textContent =
              "The angle must be between 0° and 180° (non-degenerate rhombus).";
            areaEl.textContent = "—";
            stepsEl.textContent = "Check that the interior angle is valid.";
            return;
          }
          A = a * a * sinTheta;
          formulaEl.textContent = "Using A = a² × sin(θ)";
          const thetaDisplay =
            angleUnit === "deg" ? `${theta}°` : `${theta} rad`;
          stepsHtml = `
        1. Use the side–angle formula: A = a² × sin(θ)<br>
        2. Compute a²: ${a}² = ${formatNumber(a * a)}<br>
        3. Compute sin(θ): sin(${thetaDisplay}) ≈ ${formatNumber(sinTheta)}<br>
        4. Multiply: A ≈ ${formatNumber(A)} ${unitLabel}
      `;
        } else if (currentMode === "coordinates") {
          const x1 = parseFloat(document.getElementById("x1").value);
          const y1 = parseFloat(document.getElementById("y1").value);
          const x2 = parseFloat(document.getElementById("x2").value);
          const y2 = parseFloat(document.getElementById("y2").value);
          const x3 = parseFloat(document.getElementById("x3").value);
          const y3 = parseFloat(document.getElementById("y3").value);
          const x4 = parseFloat(document.getElementById("x4").value);
          const y4 = parseFloat(document.getElementById("y4").value);

          if ([x1, y1, x2, y2, x3, y3, x4, y4].some((v) => isNaN(v))) {
            errorEl.textContent = "Please enter all 8 coordinate values.";
            areaEl.textContent = "—";
            stepsEl.textContent =
              "Coordinates must be complete to use the shoelace formula.";
            return;
          }

          const sum1 = x1 * y2 + x2 * y3 + x3 * y4 + x4 * y1;
          const sum2 = y1 * x2 + y2 * x3 + y3 * x4 + y4 * x1;
          const signedArea = 0.5 * (sum1 - sum2);
          A = Math.abs(signedArea);

          formulaEl.textContent =
            "Using the shoelace formula for quadrilaterals";
          stepsHtml = `
        1. Compute sum₁ = x₁y₂ + x₂y₃ + x₃y₄ + x₄y₁ = ${formatNumber(sum1)}<br>
        2. Compute sum₂ = y₁x₂ + y₂x₃ + y₃x₄ + y₄x₁ = ${formatNumber(sum2)}<br>
        3. Signed area = ½ · (sum₁ − sum₂) = ½ · (${formatNumber(
          sum1
        )} − ${formatNumber(sum2)}) = ${formatNumber(signedArea)}<br>
        4. Take absolute value: A = |${formatNumber(
          signedArea
        )}| = ${formatNumber(A)} ${unitLabel}
      `;
        }

        areaEl.textContent =
          A !== null ? `${formatNumber(A)} ${unitLabel}` : "—";
        stepsEl.innerHTML =
          stepsHtml ||
          "Enter your values and click “Calculate area” to see the working.";
      }

      document
        .getElementById("calc-btn")
        .addEventListener("click", calculateArea);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document
          .querySelectorAll('input[type="number"]')
          .forEach((inp) => (inp.value = ""));
        document.getElementById("error-msg").textContent = "";
        document.getElementById("area-output").textContent = "—";
        document.getElementById("area-formula-used").textContent = "";
        document.getElementById("steps-output").textContent =
          "Enter your values and click “Calculate area” to see the working.";
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
