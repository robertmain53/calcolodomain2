    <script>
      // LTV calculator logic
      (function () {
        const propertyValueEl = document.getElementById("propertyValue");
        const loanAmountEl = document.getElementById("loanAmount");
        const downPaymentEl = document.getElementById("downPayment");
        const downPaymentPercentEl =
          document.getElementById("downPaymentPercent");
        const maxLtvEl = document.getElementById("maxLtv");

        const ltvResultEl = document.getElementById("ltvResult");
        const ltvCategoryEl = document.getElementById("ltvCategory");
        const ltvBarEl = document.getElementById("ltvBar");

        const impliedLoanEl = document.getElementById("impliedLoan");
        const impliedDownEl = document.getElementById("impliedDown");
        const downPercentOutEl = document.getElementById("downPercentOut");
        const maxLoanAllowedEl = document.getElementById("maxLoanAllowed");
        const extraEquityNeededEl =
          document.getElementById("extraEquityNeeded");

        const btnFromLoan = document.getElementById("btnLtvFromLoan");
        const btnFromDown = document.getElementById("btnLtvFromDown");
        const btnReset = document.getElementById("btnResetLtv");

        function fmtMoney(v) {
          if (v === null || isNaN(v)) return "–";
          return (
            "$" + v.toLocaleString(undefined, { maximumFractionDigits: 0 })
          );
        }

        function fmtPercent(v) {
          if (v === null || isNaN(v)) return "–";
          return v.toFixed(1).replace(/\.0$/, "") + "%";
        }

        function classifyLtv(ltv) {
          if (ltv === null || isNaN(ltv))
            return {
              text: "Enter values to calculate your loan-to-value ratio.",
              color: "bg-green-500",
            };
          if (ltv <= 60)
            return {
              text: "Very low LTV – excellent equity and risk profile.",
              color: "bg-green-500",
            };
          if (ltv <= 80)
            return {
              text: "Standard LTV – typical for many mortgages.",
              color: "bg-yellow-500",
            };
          if (ltv <= 90)
            return {
              text: "High LTV – expect stricter conditions and possibly higher rates.",
              color: "bg-orange-500",
            };
          return {
            text: "Very high LTV – only some lenders/products will accept this level of risk.",
            color: "bg-red-500",
          };
        }

        function computeFromLoan() {
          const V = parseFloat(propertyValueEl.value);
          const L = parseFloat(loanAmountEl.value);

          if (!V || V <= 0 || !L || L <= 0) {
            updateOutputs(null, null, null, null, null, null);
            return;
          }

          const D = Math.max(V - L, 0);
          const ltv = (L / V) * 100;
          const downPct = (D / V) * 100;

          // If user entered a down payment percent, sync amount
          if (downPaymentPercentEl.value) {
            const dpPct = parseFloat(downPaymentPercentEl.value);
            if (!isNaN(dpPct)) {
              const dpAmt = (V * dpPct) / 100;
              downPaymentEl.value = dpAmt.toFixed(0);
            }
          } else {
            downPaymentEl.value = D.toFixed(0);
            downPaymentPercentEl.value = downPct.toFixed(1);
          }

          updateOutputs(V, L, D, ltv, downPct, parseFloat(maxLtvEl.value));
        }

        function computeFromDown() {
          const V = parseFloat(propertyValueEl.value);
          if (!V || V <= 0) {
            updateOutputs(null, null, null, null, null, null);
            return;
          }

          let D = parseFloat(downPaymentEl.value);
          const dpPctInput = parseFloat(downPaymentPercentEl.value);

          if (!isNaN(dpPctInput) && dpPctInput >= 0 && dpPctInput <= 100) {
            D = (V * dpPctInput) / 100;
            downPaymentEl.value = D.toFixed(0);
          }

          if (!D || D < 0) {
            updateOutputs(null, null, null, null, null, null);
            return;
          }

          if (D > V) D = V;

          const L = V - D;
          const ltv = (L / V) * 100;
          const downPct = (D / V) * 100;

          loanAmountEl.value = L.toFixed(0);
          downPaymentPercentEl.value = downPct.toFixed(1);

          updateOutputs(V, L, D, ltv, downPct, parseFloat(maxLtvEl.value));
        }

        function updateOutputs(V, L, D, ltv, downPct, maxLtv) {
          // LTV display
          if (ltv === null || isNaN(ltv)) {
            ltvResultEl.textContent = "–";
            ltvBarEl.style.width = "0%";
            ltvBarEl.className = "h-2.5 rounded-full bg-green-500";
            ltvCategoryEl.textContent =
              "Enter values to calculate your loan-to-value ratio.";
          } else {
            const capped = Math.min(ltv, 120);
            ltvResultEl.textContent = ltv.toFixed(1).replace(/\.0$/, "");
            ltvBarEl.style.width =
              Math.max(0, Math.min(capped, 120)) / 1.2 + "%";
            const cls = classifyLtv(ltv);
            ltvBarEl.className = "h-2.5 rounded-full " + cls.color;
            ltvCategoryEl.textContent = cls.text;
          }

          // Key figures
          impliedLoanEl.textContent = fmtMoney(L);
          impliedDownEl.textContent = fmtMoney(D);
          downPercentOutEl.textContent = fmtPercent(downPct);

          // Max loan for LTV cap
          if (V && maxLtv && maxLtv > 0 && maxLtv <= 100) {
            const maxLoan = (V * maxLtv) / 100;
            maxLoanAllowedEl.textContent = fmtMoney(maxLoan);
            if (L && L > maxLoan) {
              const extraEquity = L - maxLoan;
              extraEquityNeededEl.textContent = fmtMoney(extraEquity);
            } else {
              extraEquityNeededEl.textContent = "$0";
            }
          } else {
            maxLoanAllowedEl.textContent = "–";
            extraEquityNeededEl.textContent = "–";
          }
        }

        function resetAll() {
          propertyValueEl.value = "";
          loanAmountEl.value = "";
          downPaymentEl.value = "";
          downPaymentPercentEl.value = "";
          maxLtvEl.value = "";
          updateOutputs(null, null, null, null, null, null);
        }

        // Event listeners
        btnFromLoan.addEventListener("click", computeFromLoan);
        btnFromDown.addEventListener("click", computeFromDown);
        btnReset.addEventListener("click", resetAll);

        // Auto-recalculate on input changes (smart defaults)
        propertyValueEl.addEventListener("input", () => {
          if (loanAmountEl.value) computeFromLoan();
          else if (downPaymentEl.value || downPaymentPercentEl.value)
            computeFromDown();
          else updateOutputs(null, null, null, null, null, null);
        });

        loanAmountEl.addEventListener("input", computeFromLoan);
        downPaymentEl.addEventListener("input", computeFromDown);
        downPaymentPercentEl.addEventListener("input", computeFromDown);
        maxLtvEl.addEventListener("input", () => {
          const V = parseFloat(propertyValueEl.value);
          const L = parseFloat(loanAmountEl.value);
          const D = parseFloat(downPaymentEl.value);
          const ltv = V && L ? (L / V) * 100 : null;
          const downPct = V && D >= 0 ? (D / V) * 100 : null;
          updateOutputs(
            V || null,
            L || null,
            D || null,
            ltv,
            downPct,
            parseFloat(maxLtvEl.value)
          );
        });

        // Initial state
        updateOutputs(null, null, null, null, null, null);
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
