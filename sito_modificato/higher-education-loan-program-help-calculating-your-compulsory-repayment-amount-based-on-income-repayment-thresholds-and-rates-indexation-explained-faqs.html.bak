    <script>
      // Example HELP repayment thresholds & rates (illustrative only).
      // Structure: { min, max, rate }
      const helpThresholds = [
        { min: 0, max: 51000, rate: 0.0 },
        { min: 51000, max: 60000, rate: 0.01 },
        { min: 60000, max: 70000, rate: 0.02 },
        { min: 70000, max: 80000, rate: 0.03 },
        { min: 80000, max: 90000, rate: 0.05 },
        { min: 90000, max: 105000, rate: 0.07 },
        { min: 105000, max: 130000, rate: 0.09 },
        { min: 130000, max: 999999999, rate: 0.1 },
      ];

      function formatCurrency(value) {
        if (!isFinite(value)) return "–";
        return new Intl.NumberFormat("en-AU", {
          style: "currency",
          currency: "AUD",
          maximumFractionDigits: 0,
        }).format(value);
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "–";
        return (value * 100).toFixed(1) + "%";
      }

      function populateThresholdTable() {
        const tbody = document.getElementById("threshold-table-body");
        tbody.innerHTML = "";
        helpThresholds.forEach((b, idx) => {
          const tr = document.createElement("tr");
          tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";
          const bracketLabel = `Bracket ${idx + 1}`;
          const rangeLabel = `${formatCurrency(b.min)} – ${
            b.max >= 999999999 ? "and above" : formatCurrency(b.max)
          }`;
          tr.innerHTML = `
        <td class="px-3 py-2 border-b text-gray-700">${bracketLabel}</td>
        <td class="px-3 py-2 border-b text-gray-700">${rangeLabel}</td>
        <td class="px-3 py-2 border-b text-gray-700">${(b.rate * 100).toFixed(
          1
        )}%</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function findBracket(income) {
        return (
          helpThresholds.find((b) => income >= b.min && income < b.max) ||
          helpThresholds[helpThresholds.length - 1]
        );
      }

      function calculateCurrentYear() {
        const income = parseFloat(document.getElementById("income").value) || 0;
        const balance =
          parseFloat(document.getElementById("debt-balance").value) || 0;
        const indexRate =
          (parseFloat(document.getElementById("indexation-rate").value) || 0) /
          100;
        const voluntary =
          parseFloat(document.getElementById("voluntary-repayment").value) || 0;

        const bracket = findBracket(income);
        const rate = bracket.rate;
        const compulsory = income * rate;

        const totalRepayment = Math.min(balance, compulsory + voluntary);
        const remainingAfterRepayment = Math.max(0, balance - totalRepayment);
        const indexationAmount = remainingAfterRepayment * indexRate;
        const endBalance = remainingAfterRepayment + indexationAmount;

        // Update summary
        document.getElementById(
          "summary-bracket"
        ).textContent = `${formatCurrency(bracket.min)} – ${
          bracket.max >= 999999999 ? "and above" : formatCurrency(bracket.max)
        }`;
        document.getElementById("summary-rate").textContent =
          formatPercent(rate);
        document.getElementById("summary-compulsory").textContent =
          formatCurrency(compulsory);
        document.getElementById("summary-voluntary").textContent =
          formatCurrency(voluntary);
        document.getElementById("summary-total-repayment").textContent =
          formatCurrency(totalRepayment);
        document.getElementById("summary-indexation").textContent =
          formatCurrency(indexationAmount);
        document.getElementById("summary-end-balance").textContent =
          formatCurrency(endBalance);

        return {
          income,
          balance,
          indexRate,
          voluntary,
          compulsory,
          totalRepayment,
          endBalance,
        };
      }

      function projectLongTerm() {
        const years = Math.max(
          1,
          Math.min(
            30,
            parseInt(document.getElementById("projection-years").value) || 5
          )
        );
        const { income, balance, indexRate, voluntary } =
          calculateCurrentYear();

        let currentBalance = balance;
        let totalIndexation = 0;
        let totalRepayments = 0;
        let yearsToClear = null;

        for (let year = 1; year <= years; year++) {
          if (currentBalance <= 0 && yearsToClear === null) {
            yearsToClear = year - 1;
            break;
          }

          const bracket = findBracket(income);
          const rate = bracket.rate;
          const compulsory = income * rate;
          const totalRepayment = Math.min(
            currentBalance,
            compulsory + voluntary
          );
          currentBalance = Math.max(0, currentBalance - totalRepayment);
          const indexationAmount = currentBalance * indexRate;
          currentBalance += indexationAmount;

          totalRepayments += totalRepayment;
          totalIndexation += indexationAmount;

          if (currentBalance <= 0 && yearsToClear === null) {
            yearsToClear = year;
            break;
          }
        }

        document.getElementById("projection-years-to-clear").textContent =
          yearsToClear !== null
            ? `${yearsToClear} year${yearsToClear === 1 ? "" : "s"}`
            : `> ${years} years`;
        document.getElementById("projection-total-indexation").textContent =
          formatCurrency(totalIndexation);
        document.getElementById("projection-total-repayments").textContent =
          formatCurrency(totalRepayments);
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateThresholdTable();
        document
          .getElementById("calculate-btn")
          .addEventListener("click", () => {
            calculateCurrentYear();
            projectLongTerm();
          });
        // Initial calculation
        calculateCurrentYear();
        projectLongTerm();
      });

      // Mobile menu script (simple)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
