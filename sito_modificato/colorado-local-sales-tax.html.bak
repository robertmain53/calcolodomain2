    <script>
      (function () {
        const amountInput = document.getElementById("taxable-amount");
        const modeSelect = document.getElementById("calc-mode");
        const rateState = document.getElementById("rate-state");
        const rateCounty = document.getElementById("rate-county");
        const rateCity = document.getElementById("rate-city");
        const rateSpecial = document.getElementById("rate-special");
        const totalRateDisplay = document.getElementById("total-rate-display");
        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const resultsCard = document.getElementById("results-card");

        const amountLabelExtra = document.getElementById("amount-label-extra");
        const labelBaseAmount = document.getElementById("label-base-amount");
        const labelTotalAmount = document.getElementById("label-total-amount");

        const resultBaseAmount = document.getElementById("result-base-amount");
        const resultTotalTax = document.getElementById("result-total-tax");
        const resultTotalAmount = document.getElementById(
          "result-total-amount"
        );
        const resultEffectiveRate = document.getElementById(
          "result-effective-rate"
        );
        const resultStateTax = document.getElementById("result-state-tax");
        const resultCountyTax = document.getElementById("result-county-tax");
        const resultCityTax = document.getElementById("result-city-tax");
        const resultSpecialTax = document.getElementById("result-special-tax");

        function parseRate(input) {
          const v = parseFloat(input.value);
          return isNaN(v) || v < 0 ? 0 : v;
        }

        function formatMoney(value) {
          return "$" + value.toFixed(2);
        }

        function formatPercent(value) {
          return value.toFixed(2) + "%";
        }

        function updateTotalRateDisplay() {
          const totalRate =
            parseRate(rateState) +
            parseRate(rateCounty) +
            parseRate(rateCity) +
            parseRate(rateSpecial);
          totalRateDisplay.textContent = formatPercent(totalRate);
        }

        function updateModeLabels() {
          if (modeSelect.value === "exclusive") {
            amountLabelExtra.textContent = "(before tax)";
            labelBaseAmount.textContent = "Taxable amount";
            labelTotalAmount.textContent = "Total with tax";
          } else {
            amountLabelExtra.textContent = "(total, tax included)";
            labelBaseAmount.textContent = "Price before tax";
            labelTotalAmount.textContent = "Total (tax included)";
          }
        }

        function calculate() {
          const amount = parseFloat(amountInput.value);
          if (isNaN(amount) || amount < 0) {
            alert("Please enter a valid amount greater than or equal to 0.");
            return;
          }

          const rState = parseRate(rateState) / 100;
          const rCounty = parseRate(rateCounty) / 100;
          const rCity = parseRate(rateCity) / 100;
          const rSpecial = parseRate(rateSpecial) / 100;
          const rTotal = rState + rCounty + rCity + rSpecial;

          if (rTotal < 0) {
            alert("Total tax rate cannot be negative.");
            return;
          }

          let base, total, tax;
          if (modeSelect.value === "exclusive") {
            base = amount;
            tax = base * rTotal;
            total = base + tax;
          } else {
            total = amount;
            base = rTotal === 0 ? total : total / (1 + rTotal);
            tax = total - base;
          }

          const stateTax = base * rState;
          const countyTax = base * rCounty;
          const cityTax = base * rCity;
          const specialTax = base * rSpecial;

          resultBaseAmount.textContent = formatMoney(base);
          resultTotalTax.textContent = formatMoney(tax);
          resultTotalAmount.textContent = formatMoney(total);
          resultEffectiveRate.textContent = formatPercent(rTotal * 100);

          resultStateTax.textContent = formatMoney(stateTax);
          resultCountyTax.textContent = formatMoney(countyTax);
          resultCityTax.textContent = formatMoney(cityTax);
          resultSpecialTax.textContent = formatMoney(specialTax);

          resultsCard.classList.remove("hidden");
        }

        function resetAll() {
          amountInput.value = "";
          rateState.value = "2.9";
          rateCounty.value = "";
          rateCity.value = "";
          rateSpecial.value = "";
          resultsCard.classList.add("hidden");
          updateTotalRateDisplay();
          updateModeLabels();
        }

        rateState.addEventListener("input", updateTotalRateDisplay);
        rateCounty.addEventListener("input", updateTotalRateDisplay);
        rateCity.addEventListener("input", updateTotalRateDisplay);
        rateSpecial.addEventListener("input", updateTotalRateDisplay);
        modeSelect.addEventListener("change", updateModeLabels);
        calculateBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetAll);

        updateTotalRateDisplay();
        updateModeLabels();
      })();
    </script>

