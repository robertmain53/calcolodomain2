    <script>
      function formatINR(value) {
        if (isNaN(value)) return "₹ 0";
        const rounded = Math.round(value);
        return "₹ " + rounded.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calculateGratuity() {
        const employeeType = document.getElementById("employee-type").value;
        const basicDa = parseFloat(document.getElementById("basic-da").value) || 0;
        let years = parseInt(document.getElementById("years").value, 10) || 0;
        let months = parseInt(document.getElementById("months").value, 10) || 0;
        const serviceStatus = document.getElementById("service-status").value;
        const govtEmployee = document.getElementById("govt-employee").value;
        const customCap = parseFloat(document.getElementById("custom-cap").value) || 0;

        if (months < 0) months = 0;
        if (months > 11) months = 11;
        if (years < 0) years = 0;

        // --- UPDATED LOGIC FOR ROUNDING ---
        let completedYears = years;
        let roundingNote = "";

        if (employeeType === "covered") {
          // Covered: Round > 6 months
          if (months > 6) {
            completedYears = years + 1;
            roundingNote = `Rounded up (Act compliant): ${years}y ${months}m → ${completedYears} years.`;
          } else {
            roundingNote = `No rounding: ${years}y ${months}m → ${completedYears} years.`;
          }
        } else {
          // Not Covered: Fractions usually ignored
          completedYears = years; 
          if (months > 0) {
            roundingNote = `Not Covered under Act: Fractions of a year are generally ignored.`;
          }
        }

        const eligibilityMsg = document.getElementById("eligibility-message");
        eligibilityMsg.classList.add("hidden");
        eligibilityMsg.textContent = "";

        // Eligibility check
        // Note: Even if rounded up to 5, if actual service < 5 years (e.g. 4y 8m),
        // strict legal interpretation often denies gratuity for resignation.
        // However, for calculation purposes we use the rounded figure.
        if (serviceStatus === "normal" && completedYears < 5) {
          eligibilityMsg.textContent =
            "Note: You generally need 5 full years of continuous service to be eligible for gratuity (unless in case of death/disablement).";
          eligibilityMsg.classList.remove("hidden");
        }

        // Formula selection
        const divisor = employeeType === "covered" ? 26 : 30;
        const grossGratuity = (basicDa * 15 * completedYears) / divisor;

        // Tax treatment
        let exemptAmount = 0;
        let taxableAmount = 0;

        if (govtEmployee === "yes") {
          exemptAmount = grossGratuity;
          taxableAmount = 0;
        } else {
          if (customCap > 0) {
            exemptAmount = Math.min(grossGratuity, customCap);
          } else {
            exemptAmount = grossGratuity;
          }
          taxableAmount = Math.max(0, grossGratuity - exemptAmount);
        }

        document.getElementById("result-years").textContent = `${completedYears} year${completedYears === 1 ? "" : "s"}`;
        document.getElementById("result-years-note").textContent = roundingNote;
        document.getElementById("result-gross").textContent = formatINR(grossGratuity);
        document.getElementById("result-exempt").textContent = formatINR(exemptAmount);
        document.getElementById("result-taxable").textContent = formatINR(taxableAmount);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const inputs = [
          "employee-type",
          "basic-da",
          "years",
          "months",
          "service-status",
          "govt-employee",
          "custom-cap",
        ];
        document
          .getElementById("calc-btn")
          .addEventListener("click", calculateGratuity);
        inputs.forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("change", calculateGratuity);
            el.addEventListener("input", function () {
              calculateGratuity();
            });
          }
        });
        calculateGratuity();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
