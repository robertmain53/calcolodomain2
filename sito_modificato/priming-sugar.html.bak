    <script>
      // Utility functions
      function clamp(value, min, max) {
        return Math.min(Math.max(value, min), max);
      }

      function fToC(f) {
        return ((f - 32) * 5) / 9;
      }

      function cToF(c) {
        return (c * 9) / 5 + 32;
      }

      // Residual CO2 (volumes) as function of temperature in °C
      function residualCO2FromTempC(Tc) {
        // Empirical fit commonly used in homebrew calculators
        return 3.0378 - 0.050062 * Tc + 0.00026555 * Tc * Tc;
      }

      // Sugar factors relative to corn sugar (dextrose)
      const sugarFactors = {
        corn: 1.0, // baseline
        table: 0.95, // slightly more fermentable
        dme: 1.6, // less fermentable, need more
        honey: 1.3, // approximate, variable water content
      };

      function calculatePriming() {
        const mode = document.body.dataset.mode || "batch";

        // Volume
        let volume = parseFloat(document.getElementById("volume").value);
        const volumeUnit = document.getElementById("volume-unit").value;

        // Bottle mode: override volume from bottle size * count
        let bottleSize = parseFloat(
          document.getElementById("bottle-size").value
        );
        const bottleSizeUnit =
          document.getElementById("bottle-size-unit").value;
        let bottleCount = parseInt(
          document.getElementById("bottle-count").value,
          10
        );

        if (mode === "bottle") {
          if (
            isNaN(bottleSize) ||
            bottleSize <= 0 ||
            isNaN(bottleCount) ||
            bottleCount <= 0
          ) {
            alert("Please enter a valid bottle size and number of bottles.");
            return;
          }
          let bottleSizeL;
          if (bottleSizeUnit === "mL") {
            bottleSizeL = bottleSize / 1000;
          } else {
            // fl oz to L
            bottleSizeL = bottleSize * 0.0295735;
          }
          const totalVolumeL = bottleSizeL * bottleCount;
          volume = totalVolumeL;
          document.getElementById("volume").value = totalVolumeL.toFixed(2);
          document.getElementById("volume-unit").value = "L";
        }

        if (isNaN(volume) || volume <= 0) {
          alert("Please enter a valid beer volume.");
          return;
        }

        // Convert volume to liters
        let volumeL = volumeUnit === "L" ? volume : volume * 3.78541;

        // Temperature
        let temp = parseFloat(document.getElementById("temperature").value);
        const tempUnit = document.getElementById("temp-unit").value;
        if (isNaN(temp)) {
          alert("Please enter a valid temperature.");
          return;
        }
        let tempC = tempUnit === "C" ? temp : fToC(temp);

        // Target CO2
        let targetCO2 = parseFloat(document.getElementById("target-co2").value);
        if (isNaN(targetCO2) || targetCO2 <= 0) {
          alert("Please enter a valid target carbonation level.");
          return;
        }

        // Residual CO2
        let residualOverride = parseFloat(
          document.getElementById("residual-co2").value
        );
        let residualCO2 = isNaN(residualOverride)
          ? residualCO2FromTempC(tempC)
          : residualOverride;

        // Needed CO2
        let neededCO2 = targetCO2 - residualCO2;
        if (neededCO2 <= 0) {
          neededCO2 = 0;
        }

        // Base grams of corn sugar: 4.0 g/L per volume
        const baseGramsCorn = neededCO2 * volumeL * 4.0;

        // Sugar type
        const sugarType = document.getElementById("sugar-type").value;
        let factor;
        if (sugarType === "custom") {
          let customFerment = parseFloat(
            document.getElementById("custom-fermentability").value
          );
          if (isNaN(customFerment) || customFerment <= 0) {
            customFerment = 100;
          }
          factor = 100 / customFerment; // if 80% as fermentable, need 100/80 = 1.25x
        } else {
          factor = sugarFactors[sugarType] || 1.0;
        }

        const gramsSugar = baseGramsCorn * factor;

        // Convert to ounces and teaspoons (approximate)
        const ouncesSugar = gramsSugar / 28.3495;
        // 1 tsp sugar ~ 4 g (rough average)
        const teaspoonsSugar = gramsSugar / 4.0;

        // Per bottle
        let gramsPerBottle = null;
        let tspPerBottle = null;
        if (mode === "bottle" && bottleCount > 0) {
          gramsPerBottle = gramsSugar / bottleCount;
          tspPerBottle = gramsPerBottle / 4.0;
        }

        // Update results
        const sugarLabelMap = {
          corn: "corn sugar (dextrose)",
          table: "table sugar (sucrose)",
          dme: "DME (dry malt extract)",
          honey: "honey",
          custom: "custom fermentable",
        };
        const sugarLabel = sugarLabelMap[sugarType] || "sugar";

        const totalWeightEl = document.getElementById("result-total-weight");
        const totalVolumeEl = document.getElementById("result-total-volume");
        const perBottleSection = document.getElementById("per-bottle-result");
        const perBottleWeightEl = document.getElementById(
          "result-per-bottle-weight"
        );
        const perBottleVolumeEl = document.getElementById(
          "result-per-bottle-volume"
        );
        const finalCO2El = document.getElementById("result-final-co2");
        const residualCO2El = document.getElementById("result-residual-co2");

        if (gramsSugar <= 0) {
          totalWeightEl.textContent = "0 g " + sugarLabel;
          totalVolumeEl.textContent =
            "No priming sugar needed (residual CO₂ ≥ target).";
          perBottleSection.classList.add("hidden");
        } else {
          totalWeightEl.textContent =
            gramsSugar.toFixed(1) +
            " g " +
            sugarLabel +
            " (" +
            ouncesSugar.toFixed(2) +
            " oz)";
          totalVolumeEl.textContent =
            teaspoonsSugar.toFixed(1) +
            " tsp (approximate) for the whole batch";
          if (mode === "bottle" && gramsPerBottle !== null) {
            perBottleSection.classList.remove("hidden");
            perBottleWeightEl.textContent =
              gramsPerBottle.toFixed(2) + " g " + sugarLabel + " per bottle";
            perBottleVolumeEl.textContent =
              tspPerBottle.toFixed(2) + " tsp per bottle (approximate)";
          } else {
            perBottleSection.classList.add("hidden");
          }
        }

        finalCO2El.textContent = targetCO2.toFixed(2) + " vols CO₂";
        residualCO2El.textContent = residualCO2.toFixed(2) + " vols CO₂";
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Default mode
        document.body.dataset.mode = "batch";

        const modeBatchBtn = document.getElementById("mode-batch");
        const modeBottleBtn = document.getElementById("mode-bottle");
        const bottleSettings = document.getElementById("bottle-settings");
        const bottleModeHint = document.getElementById("bottle-mode-hint");

        modeBatchBtn.addEventListener("click", function () {
          document.body.dataset.mode = "batch";
          modeBatchBtn.classList.remove("bg-gray-100", "text-gray-700");
          modeBatchBtn.classList.add("bg-blue-600", "text-white");
          modeBottleBtn.classList.remove("bg-blue-600", "text-white");
          modeBottleBtn.classList.add("bg-gray-100", "text-gray-700");
          bottleSettings.classList.add("hidden");
          bottleModeHint.classList.add("hidden");
        });

        modeBottleBtn.addEventListener("click", function () {
          document.body.dataset.mode = "bottle";
          modeBottleBtn.classList.remove("bg-gray-100", "text-gray-700");
          modeBottleBtn.classList.add("bg-blue-600", "text-white");
          modeBatchBtn.classList.remove("bg-blue-600", "text-white");
          modeBatchBtn.classList.add("bg-gray-100", "text-gray-700");
          bottleSettings.classList.remove("hidden");
          bottleModeHint.classList.remove("hidden");
        });

        // Style preset handling
        const stylePreset = document.getElementById("style-preset");
        const targetCo2Input = document.getElementById("target-co2");
        const styleBadge = document.getElementById("style-vols-badge");

        stylePreset.addEventListener("change", function () {
          const selected = stylePreset.options[stylePreset.selectedIndex];
          const vols = parseFloat(selected.dataset.vols);
          if (!isNaN(vols)) {
            targetCo2Input.value = vols.toFixed(1);
            if (stylePreset.value === "custom") {
              styleBadge.textContent = "Style: Custom";
            } else {
              styleBadge.textContent = "Style: " + selected.textContent.trim();
            }
          }
        });

        // Sugar type handling
        const sugarTypeSelect = document.getElementById("sugar-type");
        const customFermentWrapper = document.getElementById(
          "custom-fermentability-wrapper"
        );

        sugarTypeSelect.addEventListener("change", function () {
          if (sugarTypeSelect.value === "custom") {
            customFermentWrapper.classList.remove("hidden");
          } else {
            customFermentWrapper.classList.add("hidden");
          }
        });

        // Calculate button
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculatePriming);

        // Initial calculation
        calculatePriming();
      });
    </script>

