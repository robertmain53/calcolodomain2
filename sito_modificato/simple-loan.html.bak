    <script>
      // Lightweight chart rendering without external dependencies
      function drawLineChart(canvas, dataPoints, options = {}) {
        const ctx = canvas.getContext("2d");
        const width = (canvas.width = canvas.clientWidth);
        const height = (canvas.height = canvas.clientHeight);
        ctx.clearRect(0, 0, width, height);

        if (!dataPoints || dataPoints.length === 0) return;

        const padding = 30;
        const maxY = Math.max(...dataPoints.map((p) => p.y));
        const minY = Math.min(...dataPoints.map((p) => p.y));
        const rangeY = maxY - minY || 1;

        ctx.strokeStyle = options.axisColor || "#9ca3af";
        ctx.lineWidth = 1;
        // axes
        ctx.beginPath();
        ctx.moveTo(padding, padding / 2);
        ctx.lineTo(padding, height - padding);
        ctx.lineTo(width - padding / 2, height - padding);
        ctx.stroke();

        // line
        ctx.strokeStyle = options.lineColor || "#2563eb";
        ctx.lineWidth = 2;
        ctx.beginPath();
        dataPoints.forEach((p, i) => {
          const x =
            padding +
            (i / Math.max(1, dataPoints.length - 1)) * (width - 1.5 * padding);
          const y =
            height -
            padding -
            ((p.y - minY) / rangeY) * (height - 1.5 * padding);
          if (i === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        });
        ctx.stroke();
      }

      function drawPieChart(canvas, values, colors) {
        const ctx = canvas.getContext("2d");
        const width = (canvas.width = canvas.clientWidth);
        const height = (canvas.height = canvas.clientHeight);
        ctx.clearRect(0, 0, width, height);

        const total = values.reduce((a, b) => a + b, 0);
        if (!total) return;

        const radius = Math.min(width, height) / 2 - 10;
        const cx = width / 2;
        const cy = height / 2;
        let startAngle = -Math.PI / 2;

        values.forEach((val, i) => {
          const sliceAngle = (val / total) * 2 * Math.PI;
          ctx.beginPath();
          ctx.moveTo(cx, cy);
          ctx.arc(cx, cy, radius, startAngle, startAngle + sliceAngle);
          ctx.closePath();
          ctx.fillStyle = colors[i] || "#2563eb";
          ctx.fill();
          startAngle += sliceAngle;
        });
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0.00";
        return "$" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function formatYearsMonths(totalPeriods, periodsPerYear) {
        if (!isFinite(totalPeriods) || totalPeriods <= 0 || !periodsPerYear)
          return "–";
        const years = Math.floor(totalPeriods / periodsPerYear);
        const months = Math.round(
          ((totalPeriods % periodsPerYear) * 12) / periodsPerYear
        );
        const parts = [];
        if (years > 0) parts.push(years + " year" + (years > 1 ? "s" : ""));
        if (months > 0) parts.push(months + " month" + (months > 1 ? "s" : ""));
        return parts.length ? parts.join(" ") : "Less than 1 month";
      }

      function calculateLoan() {
        const amount =
          parseFloat(document.getElementById("loan-amount").value) || 0;
        const annualRate =
          parseFloat(document.getElementById("interest-rate").value) || 0;
        const termValue =
          parseFloat(document.getElementById("loan-term").value) || 0;
        const termUnit = document.getElementById("term-unit").value;
        const frequency = document.getElementById("payment-frequency").value;
        const extra =
          parseFloat(document.getElementById("extra-payment").value) || 0;
        const simpleInterest = document.getElementById(
          "simple-interest-toggle"
        ).checked;

        if (amount <= 0 || termValue <= 0) {
          alert("Please enter a positive loan amount and term.");
          return;
        }

        let paymentsPerYear;
        switch (frequency) {
          case "weekly":
            paymentsPerYear = 52;
            break;
          case "biweekly":
            paymentsPerYear = 26;
            break;
          case "quarterly":
            paymentsPerYear = 4;
            break;
          case "annually":
            paymentsPerYear = 1;
            break;
          default:
            paymentsPerYear = 12;
        }

        const years = termUnit === "months" ? termValue / 12 : termValue;
        let n = Math.round(years * paymentsPerYear);
        if (n <= 0) n = 1;

        const r = annualRate / 100 / paymentsPerYear;

        let payment,
          schedule = [],
          totalInterest = 0,
          totalPaid = 0;

        if (simpleInterest) {
          const totalInterestSimple = amount * (annualRate / 100) * years;
          const totalOwed = amount + totalInterestSimple;
          payment = totalOwed / n;
          let balance = amount;
          let cumulativeInterest = 0;

          for (let i = 1; i <= n; i++) {
            const interestPortion = totalInterestSimple / n;
            let principalPortion = payment - interestPortion;
            if (i === n) {
              principalPortion = balance;
              payment = principalPortion + interestPortion;
            }
            balance -= principalPortion;
            cumulativeInterest += interestPortion;
            schedule.push({
              period: i,
              payment,
              principal: principalPortion,
              interest: interestPortion,
              totalInterest: cumulativeInterest,
              balance: Math.max(0, balance),
            });
          }
          totalInterest = totalInterestSimple;
          totalPaid = totalOwed;
        } else {
          // Amortizing loan with optional extra payment
          let basePayment;
          if (r === 0) {
            basePayment = amount / n;
          } else {
            const pow = Math.pow(1 + r, n);
            basePayment = (amount * r * pow) / (pow - 1);
          }
          payment = basePayment + extra;

          let balance = amount;
          let period = 0;
          let cumulativeInterest = 0;

          while (balance > 0 && period < n + 6000) {
            // safety cap
            period++;
            const interestPortion = balance * r;
            let principalPortion = payment - interestPortion;
            if (principalPortion <= 0) {
              // Payment too small to cover interest
              alert(
                "Payment (including extra) is too low to cover interest. Increase payment, reduce rate, or shorten term."
              );
              return;
            }
            if (principalPortion > balance) {
              principalPortion = balance;
              payment = principalPortion + interestPortion;
            }
            balance -= principalPortion;
            cumulativeInterest += interestPortion;
            schedule.push({
              period,
              payment,
              principal: principalPortion,
              interest: interestPortion,
              totalInterest: cumulativeInterest,
              balance: Math.max(0, balance),
            });
            if (balance <= 0.01) {
              balance = 0;
              break;
            }
          }
          n = schedule.length;
          totalInterest = cumulativeInterest;
          totalPaid = amount + totalInterest;
        }

        // Update summary
        document.getElementById("result-payment").textContent =
          formatCurrency(payment);
        document.getElementById("result-num-payments").textContent =
          n.toString();
        document.getElementById("result-total-interest").textContent =
          formatCurrency(totalInterest);
        document.getElementById("result-total-paid").textContent =
          formatCurrency(totalPaid);
        document.getElementById("result-payoff-time").textContent =
          formatYearsMonths(n, paymentsPerYear);

        // Approximate APR = annualRate here; in reality fees would change APR
        document.getElementById("result-apr").textContent =
          annualRate.toFixed(2) + "%";

        // Update amortization table
        const tbody = document.getElementById("amortization-body");
        tbody.innerHTML = "";
        schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1.5 text-left">${row.period}</td>
        <td class="px-3 py-1.5">${formatCurrency(row.payment)}</td>
        <td class="px-3 py-1.5">${formatCurrency(row.principal)}</td>
        <td class="px-3 py-1.5">${formatCurrency(row.interest)}</td>
        <td class="px-3 py-1.5">${formatCurrency(row.totalInterest)}</td>
        <td class="px-3 py-1.5">${formatCurrency(row.balance)}</td>
      `;
          tbody.appendChild(tr);
        });

        // Charts
        const balanceCanvas = document.getElementById("balance-chart");
        const piCanvas = document.getElementById("pi-chart");
        const balancePoints = schedule.map((r) => ({
          x: r.period,
          y: r.balance,
        }));
        drawLineChart(balanceCanvas, balancePoints, { lineColor: "#2563eb" });
        drawPieChart(piCanvas, [amount, totalInterest], ["#16a34a", "#f97316"]);

        // Store schedule for CSV export
        window._simpleLoanSchedule = schedule;
      }

      function downloadCSV() {
        const schedule = window._simpleLoanSchedule;
        if (!schedule || !schedule.length) {
          alert("Please calculate the loan first.");
          return;
        }
        const headers = [
          "Period",
          "Payment",
          "Principal",
          "Interest",
          "Total Interest",
          "Balance",
        ];
        const rows = schedule.map((r) => [
          r.period,
          r.payment.toFixed(2),
          r.principal.toFixed(2),
          r.interest.toFixed(2),
          r.totalInterest.toFixed(2),
          r.balance.toFixed(2),
        ]);
        const csvContent = [headers, ...rows]
          .map((row) => row.join(","))
          .join("\n");
        const blob = new Blob([csvContent], {
          type: "text/csv;charset=utf-8;",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "simple-loan-amortization.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateLoan);
        document
          .getElementById("download-csv")
          .addEventListener("click", downloadCSV);
        // Auto-calc on load with defaults
        calculateLoan();
      });
    </script>

