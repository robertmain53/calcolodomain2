    <script>
      // Utility functions
      function countGraphemes(str) {
        // Use Intl.Segmenter when available for better emoji / grapheme support
        if (typeof Intl !== "undefined" && Intl.Segmenter) {
          const segmenter = new Intl.Segmenter("en", {
            granularity: "grapheme",
          });
          return Array.from(segmenter.segment(str)).length;
        }
        // Fallback: approximate by spreading string (handles most surrogate pairs)
        return [...str].length;
      }

      function utf8ByteLength(str) {
        // Encode as UTF-8 and count bytes
        if (typeof TextEncoder !== "undefined") {
          return new TextEncoder().encode(str).length;
        }
        // Fallback approximation
        let bytes = 0;
        for (let i = 0; i < str.length; i++) {
          const codePoint = str.charCodeAt(i);
          if (codePoint <= 0x7f) bytes += 1;
          else if (codePoint <= 0x7ff) bytes += 2;
          else if (codePoint >= 0xd800 && codePoint <= 0xdbff) {
            // surrogate pair
            bytes += 4;
            i++;
          } else bytes += 3;
        }
        return bytes;
      }

      function estimateReadingTime(words) {
        if (!words) return "0 sec";
        const wpm = 200;
        const minutes = words / wpm;
        if (minutes < 1) {
          const seconds = Math.round(minutes * 60);
          return seconds + " sec";
        }
        const rounded = Math.ceil(minutes * 10) / 10;
        return rounded + " min";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const textInput = document.getElementById("text-input");
        const counters = {
          charsWith: document.getElementById("chars-with"),
          charsWithout: document.getElementById("chars-without"),
          words: document.getElementById("words"),
          sentences: document.getElementById("sentences"),
          paragraphs: document.getElementById("paragraphs"),
          lines: document.getElementById("lines"),
          spaces: document.getElementById("spaces"),
          digits: document.getElementById("digits"),
          letters: document.getElementById("letters"),
          uppercase: document.getElementById("uppercase"),
          lowercase: document.getElementById("lowercase"),
          punctuation: document.getElementById("punctuation"),
          emoji: document.getElementById("emoji"),
          bytes: document.getElementById("bytes"),
          readingTime: document.getElementById("reading-time"),
          remaining: document.getElementById("remaining"),
          limitStatus: document.getElementById("limit-status"),
          activeLimitLabel: document.getElementById("active-limit-label"),
        };

        const toggleLive = document.getElementById("toggle-live");
        const manualUpdateBtn = document.getElementById("manual-update");
        const clearBtn = document.getElementById("clear-text");
        const pasteBtn = document.getElementById("paste-text");
        const copyBtn = document.getElementById("copy-text");
        const toggleWrapBtn = document.getElementById("toggle-wrap");
        const limitButtons = document.querySelectorAll(".limit-btn");
        const customLimitInput = document.getElementById("custom-limit");
        const applyCustomLimitBtn =
          document.getElementById("apply-custom-limit");

        let currentLimit = 0; // 0 = no limit
        let currentLimitLabel = "None";

        function setLimit(limit, label) {
          currentLimit = limit;
          currentLimitLabel = label;
          counters.activeLimitLabel.textContent = label;
          counters.activeLimitLabel.className =
            "px-2 py-1 rounded-full text-xs " +
            (limit > 0
              ? "bg-blue-50 text-blue-700 border border-blue-200"
              : "bg-gray-100 text-gray-800 border border-gray-200");

          limitButtons.forEach((btn) => {
            btn.classList.remove(
              "bg-blue-50",
              "text-blue-700",
              "border-blue-200"
            );
            btn.classList.add(
              "bg-gray-100",
              "text-gray-700",
              "border-gray-200"
            );
            if (parseInt(btn.dataset.limit, 10) === limit) {
              btn.classList.add(
                "bg-blue-50",
                "text-blue-700",
                "border-blue-200"
              );
            }
          });

          updateCounts();
        }

        limitButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const limit = parseInt(btn.dataset.limit, 10);
            const label = limit === 0 ? "None" : btn.textContent.trim();
            setLimit(limit, label);
          });
        });

        applyCustomLimitBtn.addEventListener("click", () => {
          const val = parseInt(customLimitInput.value, 10);
          if (isNaN(val) || val < 0) {
            alert(
              "Please enter a valid non-negative number for the custom limit."
            );
            return;
          }
          setLimit(val, "Custom: " + val);
        });

        function updateCounts() {
          const text = textInput.value || "";
          const graphemes = countGraphemes(text);
          const charsWithSpaces = graphemes;
          const charsWithoutSpaces = [...text.replace(/\s/g, "")].length;

          const words =
            text.trim().length === 0
              ? 0
              : text.trim().split(/[\s]+/).filter(Boolean).length;

          const sentences =
            text.trim().length === 0
              ? 0
              : text.split(/[.!?]+/).filter((s) => s.trim().length > 0).length;

          const paragraphs =
            text.trim().length === 0
              ? 0
              : text.split(/\n{2,}/).filter((p) => p.trim().length > 0).length;

          const lines = text.length === 0 ? 1 : text.split(/\n/).length;

          let spaces = 0,
            digits = 0,
            letters = 0,
            uppercase = 0,
            lowercase = 0,
            punctuation = 0,
            emoji = 0;
          const punctRegex = /[.,;:!?'"()\[\]\-–—…]/;
          const letterRegex = /\p{L}/u;

          for (const ch of [...text]) {
            if (ch === " ") spaces++;
            if (/[0-9]/.test(ch)) digits++;
            if (letterRegex.test(ch)) {
              letters++;
              if (ch === ch.toUpperCase() && ch !== ch.toLowerCase())
                uppercase++;
              if (ch === ch.toLowerCase() && ch !== ch.toUpperCase())
                lowercase++;
            } else if (punctRegex.test(ch)) {
              punctuation++;
            } else if (!/\s/.test(ch)) {
              // Non-space, non-letter, non-basic punctuation: likely emoji/symbol
              emoji++;
            }
          }

          const bytes = utf8ByteLength(text);
          const readingTime = estimateReadingTime(words);

          counters.charsWith.textContent = charsWithSpaces;
          counters.charsWithout.textContent = charsWithoutSpaces;
          counters.words.textContent = words;
          counters.sentences.textContent = sentences;
          counters.paragraphs.textContent = paragraphs;
          counters.lines.textContent = lines;
          counters.spaces.textContent = spaces;
          counters.digits.textContent = digits;
          counters.letters.textContent = letters;
          counters.uppercase.textContent = uppercase;
          counters.lowercase.textContent = lowercase;
          counters.punctuation.textContent = punctuation;
          counters.emoji.textContent = emoji;
          counters.bytes.textContent = bytes;
          counters.readingTime.textContent = readingTime;

          if (currentLimit > 0) {
            const remaining = currentLimit - charsWithSpaces;
            counters.remaining.textContent = remaining;
            if (remaining < 0) {
              counters.remaining.classList.remove("text-gray-900");
              counters.remaining.classList.add("text-red-600");
              counters.limitStatus.textContent =
                Math.abs(remaining) + " characters over the limit.";
              counters.limitStatus.classList.remove("text-gray-500");
              counters.limitStatus.classList.add("text-red-600");
              textInput.classList.add("highlight-over");
            } else {
              counters.remaining.classList.remove("text-red-600");
              counters.remaining.classList.add("text-gray-900");
              counters.limitStatus.textContent =
                remaining + " characters remaining.";
              counters.limitStatus.classList.remove("text-red-600");
              counters.limitStatus.classList.add("text-gray-500");
              textInput.classList.remove("highlight-over");
            }
          } else {
            counters.remaining.textContent = "∞";
            counters.remaining.classList.remove("text-red-600");
            counters.remaining.classList.add("text-gray-900");
            counters.limitStatus.textContent = "";
            textInput.classList.remove("highlight-over");
          }
        }

        // Live / manual update toggle
        toggleLive.addEventListener("change", () => {
          if (toggleLive.checked) {
            manualUpdateBtn.classList.add("hidden");
            updateCounts();
          } else {
            manualUpdateBtn.classList.remove("hidden");
          }
        });

        manualUpdateBtn.addEventListener("click", updateCounts);

        textInput.addEventListener("input", () => {
          if (toggleLive.checked) updateCounts();
        });

        clearBtn.addEventListener("click", () => {
          textInput.value = "";
          updateCounts();
          textInput.focus();
        });

        pasteBtn.addEventListener("click", async () => {
          if (navigator.clipboard && navigator.clipboard.readText) {
            try {
              const clip = await navigator.clipboard.readText();
              textInput.value += (textInput.value ? "\n" : "") + clip;
              updateCounts();
            } catch (e) {
              alert(
                "Unable to read from clipboard. Please paste manually (Ctrl+V or Cmd+V)."
              );
            }
          } else {
            alert(
              "Clipboard API not available. Please paste manually (Ctrl+V or Cmd+V)."
            );
          }
        });

        copyBtn.addEventListener("click", async () => {
          const text = textInput.value;
          if (!text) {
            alert("There is no text to copy.");
            return;
          }
          if (navigator.clipboard && navigator.clipboard.writeText) {
            try {
              await navigator.clipboard.writeText(text);
            } catch (e) {
              alert(
                "Unable to copy to clipboard. Please select the text and copy manually."
              );
            }
          } else {
            // Fallback
            textInput.select();
            try {
              document.execCommand("copy");
            } catch (e) {
              alert("Unable to copy to clipboard. Please copy manually.");
            }
          }
        });

        let wrapEnabled = true;
        toggleWrapBtn.addEventListener("click", () => {
          wrapEnabled = !wrapEnabled;
          if (wrapEnabled) {
            textInput.style.whiteSpace = "pre-wrap";
            toggleWrapBtn.textContent = "Toggle wrap";
          } else {
            textInput.style.whiteSpace = "pre";
            toggleWrapBtn.textContent = "Toggle wrap (no wrap)";
          }
        });

        // Initialize
        textInput.style.whiteSpace = "pre-wrap";
        setLimit(0, "None");
        updateCounts();
      });
    </script>

