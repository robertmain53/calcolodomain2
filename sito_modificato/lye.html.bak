    <script>
      // Basic SAP table for common oils
      const SAP_TABLE = {
        "Olive Oil": { naoh: 0.134, koh: 0.188 },
        "Coconut Oil 76": { naoh: 0.183, koh: 0.257 },
        "Palm Oil": { naoh: 0.142, koh: 0.199 },
        "Shea Butter": { naoh: 0.128, koh: 0.18 },
        "Cocoa Butter": { naoh: 0.137, koh: 0.193 },
        "Castor Oil": { naoh: 0.128, koh: 0.18 },
        "Sunflower Oil (high oleic)": { naoh: 0.136, koh: 0.191 },
        Lard: { naoh: 0.138, koh: 0.194 },
        Tallow: { naoh: 0.14, koh: 0.197 },
      };

      const oilsBody = document.getElementById("oilsBody");
      const presetOil = document.getElementById("presetOil");
      const addOilRowBtn = document.getElementById("addOilRow");
      const unitSystemEl = document.getElementById("unitSystem");
      const recipeModeEl = document.getElementById("recipeMode");
      const batchSizeGroup = document.getElementById("batchSizeGroup");
      const batchSizeEl = document.getElementById("batchSize");
      const batchSizeUnitLabel = document.getElementById("batchSizeUnitLabel");
      const oilAmountHeader = document.getElementById("oilAmountHeader");
      const oilPercentHeader = document.getElementById("oilPercentHeader");
      const waterModeEl = document.getElementById("waterMode");
      const waterRatioGroup = document.getElementById("waterRatioGroup");
      const waterConcGroup = document.getElementById("waterConcGroup");
      const calculateBtn = document.getElementById("calculateBtn");

      const resultsBox = document.getElementById("resultsBox");
      const resultsContent = document.getElementById("resultsContent");
      const lyeAmountEl = document.getElementById("lyeAmount");
      const waterAmountEl = document.getElementById("waterAmount");
      const totalOilsEl = document.getElementById("totalOils");
      const totalBatchEl = document.getElementById("totalBatch");
      const sfDisplayEl = document.getElementById("sfDisplay");
      const waterSettingDisplayEl = document.getElementById(
        "waterSettingDisplay"
      );

      function currentUnitLabel() {
        return unitSystemEl.value === "g" ? "g" : "oz";
      }

      function addOilRow(
        name = "",
        amount = "",
        percent = "",
        sapNaoh = 0.135,
        sapKoh = 0.19
      ) {
        const tr = document.createElement("tr");
        tr.innerHTML = `
      <td class="px-2 py-1">
        <input type="text" class="oil-name w-full border rounded px-2 py-1" value="${name}">
      </td>
      <td class="px-2 py-1 text-right">
        <div class="flex items-center justify-end gap-1">
          <input type="number" min="0" step="0.1" class="oil-amount border rounded px-2 py-1 w-24" value="${amount}">
          <span class="text-xs text-gray-600 amount-unit-label">${currentUnitLabel()}</span>
        </div>
      </td>
      <td class="px-2 py-1 text-right" style="${
        recipeModeEl.value === "batch" ? "" : "display:none;"
      }">
        <input type="number" min="0" max="100" step="0.1" class="oil-percent border rounded px-2 py-1 w-20" value="${percent}">
      </td>
      <td class="px-2 py-1 text-right">
        <input type="number" min="0" step="0.001" class="sap-naoh border rounded px-2 py-1 w-20" value="${sapNaoh}">
      </td>
      <td class="px-2 py-1 text-right">
        <input type="number" min="0" step="0.001" class="sap-koh border rounded px-2 py-1 w-20" value="${sapKoh}">
      </td>
      <td class="px-2 py-1 text-center">
        <button type="button" class="remove-oil text-red-600 hover:underline text-xs">Remove</button>
      </td>
    `;
        oilsBody.appendChild(tr);
      }

      function initDefaultOils() {
        oilsBody.innerHTML = "";
        addOilRow(
          "Olive Oil",
          500,
          50,
          SAP_TABLE["Olive Oil"].naoh,
          SAP_TABLE["Olive Oil"].koh
        );
        addOilRow(
          "Coconut Oil 76",
          300,
          30,
          SAP_TABLE["Coconut Oil 76"].naoh,
          SAP_TABLE["Coconut Oil 76"].koh
        );
        addOilRow(
          "Shea Butter",
          200,
          20,
          SAP_TABLE["Shea Butter"].naoh,
          SAP_TABLE["Shea Butter"].koh
        );
      }

      presetOil.addEventListener("change", () => {
        const val = presetOil.value;
        if (!val) return;
        const sap = SAP_TABLE[val] || { naoh: 0.135, koh: 0.19 };
        addOilRow(val, "", "", sap.naoh, sap.koh);
        presetOil.value = "";
      });

      addOilRowBtn.addEventListener("click", () => {
        addOilRow();
      });

      oilsBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-oil")) {
          e.target.closest("tr").remove();
        }
      });

      unitSystemEl.addEventListener("change", () => {
        const unit = currentUnitLabel();
        batchSizeUnitLabel.textContent = unit;
        document
          .querySelectorAll(".amount-unit-label")
          .forEach((span) => (span.textContent = unit));
      });

      recipeModeEl.addEventListener("change", () => {
        const mode = recipeModeEl.value;
        if (mode === "batch") {
          batchSizeGroup.classList.remove("hidden");
          oilAmountHeader.textContent = "Amount (auto)";
          oilPercentHeader.style.display = "";
          document
            .querySelectorAll(".oil-percent")
            .forEach(
              (el) => (el.parentElement.parentElement.style.display = "")
            );
        } else {
          batchSizeGroup.classList.add("hidden");
          oilAmountHeader.textContent = "Amount";
          oilPercentHeader.style.display = "none";
          document
            .querySelectorAll(".oil-percent")
            .forEach(
              (el) => (el.parentElement.parentElement.style.display = "none")
            );
        }
      });

      waterModeEl.addEventListener("change", () => {
        if (waterModeEl.value === "ratio") {
          waterRatioGroup.classList.remove("hidden");
          waterConcGroup.classList.add("hidden");
        } else {
          waterRatioGroup.classList.add("hidden");
          waterConcGroup.classList.remove("hidden");
        }
      });

      function getOilsData() {
        const rows = Array.from(oilsBody.querySelectorAll("tr"));
        const oils = [];
        rows.forEach((row) => {
          const name = row.querySelector(".oil-name").value.trim() || "Oil";
          const amountEl = row.querySelector(".oil-amount");
          const percentEl = row.querySelector(".oil-percent");
          const sapNaoh = parseFloat(row.querySelector(".sap-naoh").value) || 0;
          const sapKoh = parseFloat(row.querySelector(".sap-koh").value) || 0;
          const amount = parseFloat(amountEl.value) || 0;
          const percent = percentEl ? parseFloat(percentEl.value) || 0 : 0;
          oils.push({ name, amount, percent, sapNaoh, sapKoh });
        });
        return oils;
      }

      function calculate() {
        const oils = getOilsData().filter(
          (o) => o.amount > 0 || recipeModeEl.value === "batch"
        );
        if (!oils.length) {
          alert(
            "Please add at least one oil with a non-zero amount or percentage."
          );
          return;
        }

        const lyeType = document.getElementById("lyeType").value;
        const superfat =
          parseFloat(document.getElementById("superfat").value) || 0;
        const waterMode = waterModeEl.value;
        const waterRatio =
          parseFloat(document.getElementById("waterRatio").value) || 0;
        const lyeConc =
          parseFloat(document.getElementById("lyeConcentration").value) || 0;
        const unit = unitSystemEl.value;

        let totalOilWeight = 0;
        let oilWeights = [];

        if (recipeModeEl.value === "weights") {
          oils.forEach((o) => {
            if (o.amount > 0) {
              totalOilWeight += o.amount;
              oilWeights.push({ ...o, weight: o.amount });
            }
          });
        } else {
          const batchSize = parseFloat(batchSizeEl.value);
          if (!batchSize || batchSize <= 0) {
            alert("Please enter a valid total oil weight for batch size mode.");
            return;
          }
          const percentSum = oils.reduce((sum, o) => sum + (o.percent || 0), 0);
          if (percentSum <= 0) {
            alert(
              "Please enter percentages for your oils (they should sum close to 100%)."
            );
            return;
          }
          oils.forEach((o) => {
            const w = (batchSize * (o.percent || 0)) / percentSum;
            totalOilWeight += w;
            oilWeights.push({ ...o, weight: w });
          });
          // Update displayed auto amounts
          const rows = Array.from(oilsBody.querySelectorAll("tr"));
          rows.forEach((row, idx) => {
            const amountEl = row.querySelector(".oil-amount");
            if (oilWeights[idx]) {
              amountEl.value = oilWeights[idx].weight.toFixed(1);
            }
          });
        }

        if (totalOilWeight <= 0) {
          alert("Total oil weight must be greater than zero.");
          return;
        }

        // Calculate theoretical lye
        let lyeTheoretical = 0;
        oilWeights.forEach((o) => {
          const sap = lyeType === "NaOH" ? o.sapNaoh : o.sapKoh;
          lyeTheoretical += o.weight * sap;
        });

        const lyeActual = lyeTheoretical * (1 - superfat / 100);

        // Water calculation
        let waterAmount = 0;
        let waterDesc = "";
        if (waterMode === "ratio") {
          if (waterRatio <= 0) {
            alert("Please enter a valid water : lye ratio.");
            return;
          }
          waterAmount = lyeActual * waterRatio;
          waterDesc = `water : lye ratio of ${waterRatio.toFixed(2)} : 1`;
        } else {
          if (lyeConc <= 0 || lyeConc >= 100) {
            alert("Please enter a lye concentration between 1 and 99%.");
            return;
          }
          waterAmount = lyeActual * (100 / lyeConc - 1);
          waterDesc = `lye concentration of ${lyeConc.toFixed(0)}%`;
        }

        const totalBatch = totalOilWeight + lyeActual + waterAmount;

        const factor = unit === "g" ? 1 : 1 / 28.3495;
        const unitLabel = unit === "g" ? "g" : "oz";

        lyeAmountEl.textContent = `${(lyeActual * factor).toFixed(
          2
        )} ${unitLabel}`;
        waterAmountEl.textContent = `${(waterAmount * factor).toFixed(
          2
        )} ${unitLabel}`;
        totalOilsEl.textContent = `${(totalOilWeight * factor).toFixed(
          2
        )} ${unitLabel}`;
        totalBatchEl.textContent = `${(totalBatch * factor).toFixed(
          2
        )} ${unitLabel}`;
        sfDisplayEl.textContent = superfat.toFixed(1);
        waterSettingDisplayEl.textContent = waterDesc;

        resultsContent.classList.remove("hidden");
      }

      calculateBtn.addEventListener("click", calculate);

      // Initialize defaults
      initDefaultOils();
    </script>

