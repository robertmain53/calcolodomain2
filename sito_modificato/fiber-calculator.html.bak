    <script>
      // Fiber calculator logic
      function clamp(val, min, max) {
        if (isNaN(val)) return NaN;
        return Math.min(Math.max(val, min), max);
      }

      function getGuidelineFiber(age, sex) {
        // Age in years, sex 'male' or 'female'
        if (age < 1) return NaN;
        if (age <= 3) return 19;
        if (age <= 8) return 25;
        if (age <= 13) return sex === "male" ? 31 : 26;
        if (age <= 18) return sex === "male" ? 38 : 26;
        if (age <= 50) return sex === "male" ? 38 : 25;
        return sex === "male" ? 30 : 21;
      }

      function updateModeVisibility() {
        const mode =
          document.querySelector('input[name="mode"]:checked')?.value ||
          "guideline";
        document
          .getElementById("per1000-row")
          .classList.toggle("hidden", mode !== "per1000");
        document
          .getElementById("custom-row")
          .classList.toggle("hidden", mode !== "custom");
      }

      document.querySelectorAll(".mode-radio").forEach((r) => {
        r.addEventListener("change", updateModeVisibility);
      });

      document.getElementById("calcBtn").addEventListener("click", function () {
        const sex = document.getElementById("sex").value;
        const ageInput = parseFloat(document.getElementById("age").value);
        const age = clamp(ageInput, 1, 120);
        const mode =
          document.querySelector('input[name="mode"]:checked')?.value ||
          "guideline";
        const caloriesInput = parseFloat(
          document.getElementById("calories").value
        );
        const calories = clamp(caloriesInput, 800, 6000);
        const targetPer1000Input = parseFloat(
          document.getElementById("targetPer1000").value
        );
        const targetPer1000 = clamp(targetPer1000Input, 5, 30);
        const customTargetInput = parseFloat(
          document.getElementById("customTarget").value
        );
        const customTarget = clamp(customTargetInput, 5, 100);
        const currentFiberInput = parseFloat(
          document.getElementById("currentFiber").value
        );
        const currentCarbsInput = parseFloat(
          document.getElementById("currentCarbs").value
        );

        const errorMsg = document.getElementById("errorMsg");
        errorMsg.classList.add("hidden");
        errorMsg.textContent = "";

        if (isNaN(age)) {
          errorMsg.textContent =
            "Please enter a valid age between 1 and 120 years.";
          errorMsg.classList.remove("hidden");
          return;
        }

        let recommendedFiber = NaN;
        let aiSourceText = "";
        let ageSexNote = "";

        if (mode === "guideline") {
          recommendedFiber = getGuidelineFiber(age, sex);
          aiSourceText = "Guideline (AI)";
          ageSexNote =
            "Based on age, sex, and standard Adequate Intake (AI) guidelines.";
        } else if (mode === "per1000") {
          if (isNaN(calories)) {
            errorMsg.textContent =
              "Please enter your daily calories to use the per-1000 kcal mode.";
            errorMsg.classList.remove("hidden");
            return;
          }
          recommendedFiber = (targetPer1000 * calories) / 1000;
          aiSourceText = targetPer1000.toFixed(1) + " g / 1000 kcal target";
          ageSexNote = "Scaled to your daily calorie intake.";
        } else if (mode === "custom") {
          recommendedFiber = customTarget;
          aiSourceText = "Custom target";
          ageSexNote = "User-defined daily fiber goal.";
        }

        if (!isFinite(recommendedFiber) || recommendedFiber <= 0) {
          errorMsg.textContent =
            "Unable to compute a valid fiber target. Please check your inputs.";
          errorMsg.classList.remove("hidden");
          return;
        }

        // Update recommended fiber
        document.getElementById("recommendedFiber").textContent =
          recommendedFiber.toFixed(1);
        document.getElementById("aiSource").textContent = aiSourceText;
        document.getElementById("ageSexNote").textContent = ageSexNote;

        // Fiber per 1000 kcal (target)
        let fiberPer1000 = NaN;
        if (!isNaN(calories) && calories > 0) {
          fiberPer1000 = (recommendedFiber / calories) * 1000;
          document.getElementById("fiberPer1000").textContent =
            fiberPer1000.toFixed(1);
          document.getElementById("fiberDensityNote").textContent =
            "Target based on your calorie intake. Common recommendation: ≥ 14 g per 1000 kcal.";
        } else {
          document.getElementById("fiberPer1000").textContent = "—";
          document.getElementById("fiberDensityNote").textContent =
            "Enter calories to see fiber per 1000 kcal.";
        }

        // Current intake vs target
        const currentFiber = isNaN(currentFiberInput)
          ? NaN
          : Math.max(0, currentFiberInput);
        const targetSummaryEl = document.getElementById("targetSummary");
        const currentFiberSummaryEl = document.getElementById(
          "currentFiberSummary"
        );
        const gapNoteEl = document.getElementById("gapNote");
        const badgeEl = document.getElementById("intakeStatusBadge");

        targetSummaryEl.textContent = recommendedFiber.toFixed(1) + " g/day";

        if (!isNaN(currentFiber) && currentFiber > 0) {
          currentFiberSummaryEl.textContent =
            currentFiber.toFixed(1) + " g/day";
          const ratioToTarget = currentFiber / recommendedFiber;
          let status = "";
          let badgeClass = "bg-gray-200 text-gray-800";
          let gapText = "";

          if (ratioToTarget < 0.7) {
            status = "Low";
            badgeClass = "bg-red-100 text-red-700";
            const diff = recommendedFiber - currentFiber;
            gapText =
              "Your intake is well below the guideline (about " +
              diff.toFixed(1) +
              " g/day less). Consider increasing fiber gradually.";
          } else if (ratioToTarget < 1.0) {
            status = "Borderline";
            badgeClass = "bg-yellow-100 text-yellow-800";
            const diff = recommendedFiber - currentFiber;
            gapText =
              "You are slightly below the guideline (about " +
              diff.toFixed(1) +
              " g/day). A few small changes could close the gap.";
          } else if (ratioToTarget <= 1.4) {
            status = "Adequate";
            badgeClass = "bg-green-100 text-green-800";
            gapText =
              "Your fiber intake is within or slightly above the guideline range.";
          } else {
            status = "High";
            badgeClass = "bg-blue-100 text-blue-800";
            const diff = currentFiber - recommendedFiber;
            gapText =
              "Your intake is well above the guideline (about " +
              diff.toFixed(1) +
              " g/day more). If you feel well, this may be fine, but increase fiber gradually and drink enough water.";
          }

          badgeEl.textContent = status;
          badgeEl.className = "badge " + badgeClass;
          gapNoteEl.textContent = gapText;
        } else {
          currentFiberSummaryEl.textContent = "Not provided";
          badgeEl.textContent = "Not evaluated";
          badgeEl.className = "badge bg-gray-200 text-gray-800";
          gapNoteEl.textContent =
            "Enter your current fiber intake to see how it compares to the guideline.";
        }

        // Carb:fiber ratio
        const currentCarbs = isNaN(currentCarbsInput)
          ? NaN
          : Math.max(0, currentCarbsInput);
        const ratioEl = document.getElementById("carbFiberRatio");
        const ratioNoteEl = document.getElementById("ratioNote");

        if (
          !isNaN(currentCarbs) &&
          currentCarbs > 0 &&
          !isNaN(currentFiber) &&
          currentFiber > 0
        ) {
          const ratio = currentCarbs / currentFiber;
          ratioEl.textContent = ratio.toFixed(1);

          if (ratio <= 8) {
            ratioNoteEl.textContent =
              "Excellent: your carb:fiber ratio suggests a very fiber-rich, minimally processed diet.";
          } else if (ratio <= 10) {
            ratioNoteEl.textContent =
              "Good: you meet the common benchmark of about 1 g fiber per 10 g carbs.";
          } else if (ratio <= 15) {
            ratioNoteEl.textContent =
              "Fair: consider adding more whole grains, legumes, fruits, and vegetables to improve fiber quality.";
          } else {
            ratioNoteEl.textContent =
              "Low fiber density: your carbs are relatively low in fiber. Try swapping some refined carbs for whole-food options.";
          }
        } else {
          ratioEl.textContent = "—";
          ratioNoteEl.textContent =
            "Enter both carbs and fiber to see your carb:fiber ratio.";
        }
      });

      // Initialize visibility on load
      updateModeVisibility();
      // Trigger initial calculation with defaults
      window.addEventListener("DOMContentLoaded", () => {
        document.getElementById("calcBtn").click();
      });
    </script>

