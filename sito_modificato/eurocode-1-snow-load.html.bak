    <script>
      // Tab switching
      const tabGround = document.getElementById("tab-ground");
      const tabRoof = document.getElementById("tab-roof");
      const panelGround = document.getElementById("panel-ground");
      const panelRoof = document.getElementById("panel-roof");

      function setActiveTab(tab) {
        if (tab === "ground") {
          tabGround.classList.add("tab-active");
          tabRoof.classList.remove("tab-active");
          panelGround.classList.remove("hidden");
          panelRoof.classList.add("hidden");
        } else {
          tabRoof.classList.add("tab-active");
          tabGround.classList.remove("tab-active");
          panelRoof.classList.remove("hidden");
          panelGround.classList.add("hidden");
        }
      }

      tabGround.addEventListener("click", () => setActiveTab("ground"));
      tabRoof.addEventListener("click", () => setActiveTab("roof"));

      // Sync sk between tabs
      const skInput = document.getElementById("sk");
      const skDisplay = document.getElementById("sk-display");
      const skRoofInput = document.getElementById("sk-roof");

      function syncSk(fromGround = true) {
        if (fromGround) {
          const val = parseFloat(skInput.value) || 0;
          skDisplay.textContent = val.toFixed(2);
          skRoofInput.value = val.toFixed(2);
        } else {
          const val = parseFloat(skRoofInput.value) || 0;
          skInput.value = val.toFixed(2);
          skDisplay.textContent = val.toFixed(2);
        }
      }

      skInput.addEventListener("input", () => syncSk(true));
      skRoofInput.addEventListener("input", () => syncSk(false));
      syncSk(true);

      // Country / zone presets (illustrative only)
      const countrySelect = document.getElementById("country");
      const zoneSelect = document.getElementById("snow-zone");

      const skPresets = {
        de: { zone1: 0.65, zone2: 0.85, zone3: 1.1, zone4: 1.6 },
        uk: { zone1: 0.5, zone2: 0.75, zone3: 1.0, zone4: 1.5 },
        at: { zone1: 0.8, zone2: 1.0, zone3: 1.5, zone4: 2.0 },
      };

      function applyPreset() {
        const c = countrySelect.value;
        const z = zoneSelect.value;
        if (
          c !== "custom" &&
          z !== "custom" &&
          skPresets[c] &&
          skPresets[c][z] !== undefined
        ) {
          const val = skPresets[c][z];
          skInput.value = val.toFixed(2);
          syncSk(true);
        }
      }

      countrySelect.addEventListener("change", applyPreset);
      zoneSelect.addEventListener("change", applyPreset);

      // Suggest μi based on roof type and slope
      const roofTypeSelect = document.getElementById("roof-type");
      const slopeInput = document.getElementById("slope");
      const muInput = document.getElementById("mu");

      function suggestMu() {
        const type = roofTypeSelect.value;
        const alpha = parseFloat(slopeInput.value) || 0;
        let mu = parseFloat(muInput.value) || 0.8;

        if (type === "flat") {
          mu = 0.8; // typical for flat roofs
        } else if (type === "monopitch" || type === "duopitch") {
          if (alpha <= 30) {
            mu = 0.8;
          } else if (alpha >= 60) {
            mu = 0.0;
          } else {
            // linear interpolation between 0.8 at 30° and 0 at 60°
            mu = (0.8 * (60 - alpha)) / 30;
          }
        } else if (type === "multispan") {
          // indicative higher accumulation in valleys
          if (alpha <= 30) {
            mu = 1.2;
          } else if (alpha >= 60) {
            mu = 0.2;
          } else {
            mu = 1.2 - (alpha - 30) * (1.0 / 30); // from 1.2 to 0.2
          }
        }

        muInput.value = mu.toFixed(2);
      }

      roofTypeSelect.addEventListener("change", suggestMu);
      slopeInput.addEventListener("input", suggestMu);

      // Roof snow load calculation
      const ceInput = document.getElementById("ce");
      const ctInput = document.getElementById("ct");
      const gammaQInput = document.getElementById("gammaQ");
      const muOut = document.getElementById("mu-out");
      const ceOut = document.getElementById("ce-out");
      const ctOut = document.getElementById("ct-out");
      const sCharOut = document.getElementById("s-char");
      const sDesignOut = document.getElementById("s-design");
      const btnCalc = document.getElementById("btn-calc");

      function calcRoofSnow() {
        const sk = parseFloat(skRoofInput.value) || 0;
        const mu = parseFloat(muInput.value) || 0;
        const ce = parseFloat(ceInput.value) || 0;
        const ct = parseFloat(ctInput.value) || 0;
        const gammaQ = parseFloat(gammaQInput.value);

        const s = mu * ce * ct * sk;
        const sDesign = !isNaN(gammaQ) && gammaQ > 0 ? gammaQ * s : null;

        muOut.textContent = mu.toFixed(2);
        ceOut.textContent = ce.toFixed(2);
        ctOut.textContent = ct.toFixed(2);
        sCharOut.textContent = s.toFixed(3);
        sDesignOut.textContent = sDesign !== null ? sDesign.toFixed(3) : "—";
      }

      btnCalc.addEventListener("click", calcRoofSnow);

      // Initial suggestions
      suggestMu();
      calcRoofSnow();
    </script>

