    <script>
      // --- Utility functions ---
      function fmtMoney(v) {
        if (!isFinite(v)) return "$0";
        const sign = v < 0 ? "-" : "";
        v = Math.abs(v);
        return (
          sign +
          v.toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }
      function fmtPercent(v) {
        if (!isFinite(v)) return "0%";
        return (v * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      // Example brackets for Metro SHS and Multnomah PFA
      function getMetroBrackets(status) {
        if (status === "married") {
          return [
            { limit: 200000, rate: 0.0 },
            { limit: 400000, rate: 0.01 },
            { limit: Infinity, rate: 0.03 },
          ];
        }
        return [
          { limit: 125000, rate: 0.0 },
          { limit: 250000, rate: 0.01 },
          { limit: Infinity, rate: 0.03 },
        ];
      }

      function getMultcoBrackets(status) {
        if (status === "married") {
          return [
            { limit: 200000, rate: 0.0 },
            { limit: 400000, rate: 0.015 },
            { limit: Infinity, rate: 0.03 },
          ];
        }
        return [
          { limit: 125000, rate: 0.0 },
          { limit: 250000, rate: 0.015 },
          { limit: Infinity, rate: 0.03 },
        ];
      }

      function calcProgressiveTax(income, brackets) {
        let tax = 0;
        let prevLimit = 0;
        const details = [];
        for (const b of brackets) {
          if (income <= prevLimit) break;
          const upper = Math.min(income, b.limit);
          const taxableHere = Math.max(0, upper - prevLimit);
          const taxHere = taxableHere * b.rate;
          if (taxableHere > 0 && b.rate > 0) {
            details.push({
              from: prevLimit,
              to: upper,
              rate: b.rate,
              taxable: taxableHere,
              tax: taxHere,
            });
          }
          tax += taxHere;
          prevLimit = b.limit;
        }
        const marginalRate =
          income <= 0
            ? 0
            : brackets.find((b) => income <= b.limit)?.rate ??
              brackets[brackets.length - 1].rate;
        return { tax, details, marginalRate };
      }

      function renderBracketDetails(containerId, details) {
        const el = document.getElementById(containerId);
        if (!el) return;
        if (!details.length) {
          el.innerHTML = "<p>No brackets apply at this income level.</p>";
          return;
        }
        el.innerHTML = details
          .map((d) => {
            return `<div>
        <div><strong>${fmtMoney(
          d.taxable
        )}</strong> taxed at <strong>${fmtPercent(
              d.rate
            )}</strong> = ${fmtMoney(d.tax)}</div>
        <div class="text-gray-500">Bracket range: ${fmtMoney(
          d.from
        )} – ${fmtMoney(d.to)}</div>
      </div>`;
          })
          .join("");
      }

      function calculate() {
        const status = document.getElementById("filing-status").value;
        const metroStatus = document.getElementById("metro-resident").value;
        const multcoStatus = document.getElementById("multco-resident").value;

        const wage =
          parseFloat(document.getElementById("wage-income").value) || 0;
        const se = parseFloat(document.getElementById("se-income").value) || 0;
        const deductions =
          parseFloat(document.getElementById("deductions").value) || 0;
        const share =
          Math.min(
            100,
            Math.max(
              0,
              parseFloat(document.getElementById("nonresident-share").value) ||
                0
            )
          ) / 100;

        const errorEl = document.getElementById("calc-error");
        errorEl.textContent = "";

        if (wage < 0 || se < 0 || deductions < 0) {
          errorEl.textContent =
            "Income and deductions must be zero or positive.";
          return;
        }

        let baseIncome = wage + se - deductions;
        if (baseIncome < 0) baseIncome = 0;

        // Determine sourced income for non-residents
        const metroBase =
          metroStatus === "nonresident"
            ? baseIncome * share
            : metroStatus === "resident"
            ? baseIncome
            : 0;
        const multcoBase =
          multcoStatus === "nonresident"
            ? baseIncome * share
            : multcoStatus === "resident"
            ? baseIncome
            : 0;

        // Metro tax
        let metroTax = 0,
          metroMarginal = 0,
          metroDetails = [];
        if (metroBase > 0 && metroStatus !== "none") {
          const res = calcProgressiveTax(metroBase, getMetroBrackets(status));
          metroTax = res.tax;
          metroMarginal = res.marginalRate;
          metroDetails = res.details;
        }

        // Multnomah tax
        let multcoTax = 0,
          multcoMarginal = 0,
          multcoDetails = [];
        if (multcoBase > 0 && multcoStatus !== "none") {
          const res = calcProgressiveTax(multcoBase, getMultcoBrackets(status));
          multcoTax = res.tax;
          multcoMarginal = res.marginalRate;
          multcoDetails = res.details;
        }

        const totalTax = metroTax + multcoTax;
        const effectiveRate = baseIncome > 0 ? totalTax / baseIncome : 0;
        const topMarginal = Math.max(metroMarginal, multcoMarginal);

        // Update UI
        document.getElementById("res-taxable-income").textContent =
          fmtMoney(baseIncome);
        document.getElementById("res-total-tax").textContent =
          fmtMoney(totalTax);
        document.getElementById("res-effective-rate").textContent =
          "Effective local rate: " + fmtPercent(effectiveRate);
        document.getElementById("res-marginal-rate").textContent =
          fmtPercent(topMarginal);

        document.getElementById("res-metro-base").textContent =
          fmtMoney(metroBase);
        document.getElementById("res-metro-tax").textContent =
          fmtMoney(metroTax);
        document.getElementById("res-multco-base").textContent =
          fmtMoney(multcoBase);
        document.getElementById("res-multco-tax").textContent =
          fmtMoney(multcoTax);

        const metroBadge = document.getElementById("metro-badge");
        const multcoBadge = document.getElementById("multco-badge");

        if (metroStatus === "none" || metroBase === 0) {
          metroBadge.textContent = "Not applied";
          metroBadge.className = "badge bg-gray-100 text-gray-700";
        } else {
          metroBadge.textContent = "Applied";
          metroBadge.className = "badge bg-blue-100 text-blue-800";
        }

        if (multcoStatus === "none" || multcoBase === 0) {
          multcoBadge.textContent = "Not applied";
          multcoBadge.className = "badge bg-gray-100 text-gray-700";
        } else {
          multcoBadge.textContent = "Applied";
          multcoBadge.className = "badge bg-purple-100 text-purple-800";
        }

        renderBracketDetails("res-metro-brackets", metroDetails);
        renderBracketDetails("res-multco-brackets", multcoDetails);
      }

      document.getElementById("calc-btn").addEventListener("click", calculate);
      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("filing-status").value = "single";
        document.getElementById("metro-resident").value = "resident";
        document.getElementById("multco-resident").value = "resident";
        document.getElementById("wage-income").value = 150000;
        document.getElementById("se-income").value = 0;
        document.getElementById("deductions").value = 0;
        document.getElementById("nonresident-share").value = 100;
        document.getElementById("calc-error").textContent = "";
        calculate();
      });

      // Auto-calc on load
      window.addEventListener("DOMContentLoaded", calculate);
    </script>

