    <script>
      function fmtMoney(v) {
        if (!isFinite(v)) return "–";
        const abs = Math.abs(v);
        const decimals = abs >= 100000 ? 0 : 2;
        return "$" + v.toFixed(decimals).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calcRothConversion() {
        const errorEl = document.getElementById("input-error");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        const age = Number(document.getElementById("current-age").value);
        const retireAge = Number(
          document.getElementById("retirement-age").value
        );
        const tradBal = Number(document.getElementById("trad-balance").value);
        const convertAmtInput = Number(
          document.getElementById("convert-amount").value
        );
        const currTaxRate =
          Number(document.getElementById("current-tax-rate").value) / 100;
        const retTaxRate =
          Number(document.getElementById("retirement-tax-rate").value) / 100;
        const r = Number(document.getElementById("pre-tax-return").value) / 100;
        const yearsAfterRet = Number(
          document.getElementById("years-after-retirement").value
        );
        const taxSource = document.getElementById("tax-source").value;
        const multiMode = document.getElementById("multi-year-mode").value;

        if (retireAge <= age) {
          errorEl.textContent =
            "Retirement age must be greater than current age.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (tradBal < 0 || convertAmtInput < 0) {
          errorEl.textContent =
            "Balances and conversion amounts must be non-negative.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (convertAmtInput > tradBal) {
          errorEl.textContent =
            "Conversion amount cannot exceed your traditional balance.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (currTaxRate < 0 || retTaxRate < 0) {
          errorEl.textContent = "Tax rates must be non-negative.";
          errorEl.classList.remove("hidden");
          return;
        }

        const yearsToRet = retireAge - age;
        const totalYears = yearsToRet + yearsAfterRet;

        // Scenario A: keep all traditional
        const tradAtRet_A = tradBal * Math.pow(1 + r, yearsToRet);
        const tradEnd_A = tradBal * Math.pow(1 + r, totalYears);
        const afterTaxRet_A = tradAtRet_A * (1 - retTaxRate);
        const afterTaxEnd_A = tradEnd_A * (1 - retTaxRate);

        // Scenario B: conversion
        let taxNow = 0;
        let tradNow_B = tradBal;
        let rothNow_B = 0;

        if (multiMode === "none") {
          const convertAmt = convertAmtInput;
          taxNow = convertAmt * currTaxRate;
          if (taxSource === "ira") {
            const totalReduction = convertAmt + taxNow;
            if (totalReduction > tradNow_B) {
              errorEl.textContent =
                "Not enough IRA balance to cover conversion plus tax from IRA.";
              errorEl.classList.remove("hidden");
              return;
            }
            tradNow_B -= totalReduction;
            rothNow_B += convertAmt;
          } else {
            tradNow_B -= convertAmt;
            rothNow_B += convertAmt;
          }
        } else if (multiMode === "even") {
          const yearsConv = yearsToRet;
          const annualConv = yearsConv > 0 ? convertAmtInput / yearsConv : 0;
          tradNow_B = tradBal;
          rothNow_B = 0;
          let ageYear = age;
          for (let y = 0; y < yearsToRet; y++) {
            const conv = Math.min(annualConv, tradNow_B);
            const taxThisYear = conv * currTaxRate;
            taxNow += taxThisYear;
            if (taxSource === "ira") {
              const totalReduction = conv + taxThisYear;
              if (totalReduction > tradNow_B) break;
              tradNow_B -= totalReduction;
              rothNow_B += conv;
            } else {
              tradNow_B -= conv;
              rothNow_B += conv;
            }
            tradNow_B *= 1 + r;
            rothNow_B *= 1 + r;
            ageYear++;
          }
          // At this point, tradNow_B and rothNow_B are balances at retirement
          const tradAtRet_B = tradNow_B;
          const rothAtRet_B = rothNow_B;
          const tradEnd_B = tradAtRet_B * Math.pow(1 + r, yearsAfterRet);
          const rothEnd_B = rothAtRet_B * Math.pow(1 + r, yearsAfterRet);
          const afterTaxRet_B = tradAtRet_B * (1 - retTaxRate) + rothAtRet_B;
          const afterTaxEnd_B = tradEnd_B * (1 - retTaxRate) + rothEnd_B;

          document.getElementById("tax-now").textContent = fmtMoney(taxNow);
          document.getElementById("tax-note").textContent =
            taxSource === "ira"
              ? "Tax assumed to be paid from IRA balance; this reduces the amount converted."
              : "Tax assumed to be paid from outside savings.";

          const compBody = document.getElementById("comparison-body");
          compBody.innerHTML = `
        <tr>
          <td class="px-3 py-2 border-b">Keep all in traditional</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            tradAtRet_A
          )}</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            afterTaxRet_A
          )}</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            afterTaxEnd_A
          )}</td>
        </tr>
        <tr>
          <td class="px-3 py-2 border-b">Even conversions until retirement</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            tradAtRet_B + rothAtRet_B
          )}</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            afterTaxRet_B
          )}</td>
          <td class="px-3 py-2 text-right border-b">${fmtMoney(
            afterTaxEnd_B
          )}</td>
        </tr>
      `;

          // Year-by-year projection for scenario B
          const projBody = document.getElementById("projection-body");
          projBody.innerHTML = "";
          let tradBalYearA = tradBal;
          let rothBalYearA = 0;
          let tradBalYearB = tradBal;
          let rothBalYearB = 0;
          let ageIter = age;
          let breakevenFound = false;
          let breakevenYearLabel = "never";

          for (let y = 0; y <= totalYears; y++) {
            if (y > 0) {
              tradBalYearA *= 1 + r;
              // Scenario B conversions only before retirement
              if (multiMode === "even" && y <= yearsToRet) {
                const conv = Math.min(annualConv, tradBalYearB);
                const taxThisYear = conv * currTaxRate;
                if (taxSource === "ira") {
                  const totalReduction = conv + taxThisYear;
                  if (totalReduction <= tradBalYearB) {
                    tradBalYearB -= totalReduction;
                    rothBalYearB += conv;
                  }
                } else {
                  tradBalYearB -= conv;
                  rothBalYearB += conv;
                }
              }
              tradBalYearB *= 1 + r;
              rothBalYearB *= 1 + r;
            }

            const afterTaxA = tradBalYearA * (1 - retTaxRate);
            const afterTaxB = tradBalYearB * (1 - retTaxRate) + rothBalYearB;

            if (!breakevenFound && afterTaxB > afterTaxA && y > 0) {
              breakevenFound = true;
              breakevenYearLabel = `${y} yrs from now (age ${age + y})`;
            }

            if (y % 5 === 0 || y === totalYears || y === yearsToRet) {
              const row = document.createElement("tr");
              row.innerHTML = `
            <td class="px-2 py-1 border-b">${y === 0 ? "Now" : y}</td>
            <td class="px-2 py-1 text-right border-b">${ageIter}</td>
            <td class="px-2 py-1 text-right border-b">${fmtMoney(
              tradBalYearB
            )}</td>
            <td class="px-2 py-1 text-right border-b">${fmtMoney(
              rothBalYearB
            )}</td>
            <td class="px-2 py-1 text-right border-b">${fmtMoney(
              afterTaxB
            )}</td>
          `;
              projBody.appendChild(row);
            }
            ageIter++;
          }

          document.getElementById("breakeven-year").textContent =
            breakevenYearLabel;
          return;
        }

        // One-time conversion scenario B (if we reach here)
        const convertAmt = convertAmtInput;
        taxNow = convertAmt * currTaxRate;
        if (taxSource === "ira") {
          const totalReduction = convertAmt + taxNow;
          if (totalReduction > tradNow_B) {
            errorEl.textContent =
              "Not enough IRA balance to cover conversion plus tax from IRA.";
            errorEl.classList.remove("hidden");
            return;
          }
          tradNow_B -= totalReduction;
          rothNow_B += convertAmt;
        } else {
          tradNow_B -= convertAmt;
          rothNow_B += convertAmt;
        }

        const tradAtRet_B = tradNow_B * Math.pow(1 + r, yearsToRet);
        const rothAtRet_B = rothNow_B * Math.pow(1 + r, yearsToRet);
        const tradEnd_B = tradAtRet_B * Math.pow(1 + r, yearsAfterRet);
        const rothEnd_B = rothAtRet_B * Math.pow(1 + r, yearsAfterRet);
        const afterTaxRet_B = tradAtRet_B * (1 - retTaxRate) + rothAtRet_B;
        const afterTaxEnd_B = tradEnd_B * (1 - retTaxRate) + rothEnd_B;

        document.getElementById("tax-now").textContent = fmtMoney(taxNow);
        document.getElementById("tax-note").textContent =
          taxSource === "ira"
            ? "Tax assumed to be paid from IRA balance; this reduces the amount converted."
            : "Tax assumed to be paid from outside savings.";

        const compBody = document.getElementById("comparison-body");
        compBody.innerHTML = `
      <tr>
        <td class="px-3 py-2 border-b">Keep all in traditional</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(tradAtRet_A)}</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(
          afterTaxRet_A
        )}</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(
          afterTaxEnd_A
        )}</td>
      </tr>
      <tr>
        <td class="px-3 py-2 border-b">One-time conversion now</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(
          tradAtRet_B + rothAtRet_B
        )}</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(
          afterTaxRet_B
        )}</td>
        <td class="px-3 py-2 text-right border-b">${fmtMoney(
          afterTaxEnd_B
        )}</td>
      </tr>
    `;

        // Year-by-year projection for scenario B
        const projBody = document.getElementById("projection-body");
        projBody.innerHTML = "";
        let tradBalYearA = tradBal;
        let rothBalYearA = 0;
        let tradBalYearB = tradNow_B;
        let rothBalYearB = rothNow_B;
        let ageIter = age;
        let breakevenFound = false;
        let breakevenYearLabel = "never";

        for (let y = 0; y <= totalYears; y++) {
          if (y > 0) {
            tradBalYearA *= 1 + r;
            tradBalYearB *= 1 + r;
            rothBalYearB *= 1 + r;
          }

          const afterTaxA = tradBalYearA * (1 - retTaxRate);
          const afterTaxB = tradBalYearB * (1 - retTaxRate) + rothBalYearB;

          if (!breakevenFound && afterTaxB > afterTaxA && y > 0) {
            breakevenFound = true;
            breakevenYearLabel = `${y} yrs from now (age ${age + y})`;
          }

          if (y % 5 === 0 || y === totalYears || y === yearsToRet) {
            const row = document.createElement("tr");
            row.innerHTML = `
          <td class="px-2 py-1 border-b">${y === 0 ? "Now" : y}</td>
          <td class="px-2 py-1 text-right border-b">${ageIter}</td>
          <td class="px-2 py-1 text-right border-b">${fmtMoney(
            tradBalYearB
          )}</td>
          <td class="px-2 py-1 text-right border-b">${fmtMoney(
            rothBalYearB
          )}</td>
          <td class="px-2 py-1 text-right border-b">${fmtMoney(afterTaxB)}</td>
        `;
            projBody.appendChild(row);
          }
          ageIter++;
        }

        document.getElementById("breakeven-year").textContent =
          breakevenYearLabel;
      }

      document
        .getElementById("calc-btn")
        .addEventListener("click", calcRothConversion);
    </script>

