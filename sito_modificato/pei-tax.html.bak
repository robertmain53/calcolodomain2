    <script>
      // --- Simple tax model constants (approximate, for demo purposes only) ---
      const TAX_CONFIG = {
        2024: {
          peiBrackets: [
            { upTo: 31984, rate: 0.098 },
            { upTo: 63969, rate: 0.138 },
            { upTo: Infinity, rate: 0.167 },
          ],
          peiBasicAmount: 12000,
          peiLowestRate: 0.098,
          fedBrackets: [
            { upTo: 55867, rate: 0.15 },
            { upTo: 111733, rate: 0.205 },
            { upTo: 173205, rate: 0.26 },
            { upTo: 246752, rate: 0.29 },
            { upTo: Infinity, rate: 0.33 },
          ],
          fedBasicAmount: 15000,
          fedLowestRate: 0.15,
          cpp: {
            rate: 0.0595,
            basicExemption: 3500,
            maxPensionable: 68500,
          },
          ei: {
            rate: 0.0166,
            maxInsurable: 63100,
          },
        },
        2025: {
          // 2025 estimated by modest indexation of 2024 values
          peiBrackets: [
            { upTo: 33000, rate: 0.098 },
            { upTo: 66000, rate: 0.138 },
            { upTo: Infinity, rate: 0.167 },
          ],
          peiBasicAmount: 12300,
          peiLowestRate: 0.098,
          fedBrackets: [
            { upTo: 57500, rate: 0.15 },
            { upTo: 115000, rate: 0.205 },
            { upTo: 178000, rate: 0.26 },
            { upTo: 253000, rate: 0.29 },
            { upTo: Infinity, rate: 0.33 },
          ],
          fedBasicAmount: 15300,
          fedLowestRate: 0.15,
          cpp: {
            rate: 0.06,
            basicExemption: 3500,
            maxPensionable: 70500,
          },
          ei: {
            rate: 0.017,
            maxInsurable: 65000,
          },
        },
      };

      function calcBracketTax(income, brackets) {
        let remaining = income;
        let lastRate = 0;
        let tax = 0;
        let prevLimit = 0;
        for (const b of brackets) {
          const span = Math.min(remaining, b.upTo - prevLimit);
          if (span > 0) {
            tax += span * b.rate;
            remaining -= span;
            lastRate = b.rate;
          }
          prevLimit = b.upTo;
          if (remaining <= 0) break;
        }
        return { tax, lastRate };
      }

      function formatMoney(v) {
        if (!isFinite(v)) return "-";
        return v.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(v) {
        if (!isFinite(v)) return "-";
        return (v * 100).toFixed(1) + "%";
      }

      function updateBars(pei, fed, cppEi) {
        const total = Math.max(pei + fed + cppEi, 1);
        document.getElementById("barPei").style.width =
          ((pei / total) * 100).toFixed(1) + "%";
        document.getElementById("barFed").style.width =
          ((fed / total) * 100).toFixed(1) + "%";
        document.getElementById("barCppEi").style.width =
          ((cppEi / total) * 100).toFixed(1) + "%";
      }

      function calculatePeiTax() {
        const year = document.getElementById("taxYear").value;
        const cfg = TAX_CONFIG[year];
        const income = parseFloat(
          document.getElementById("grossIncome").value || "0"
        );
        const rrsp = parseFloat(document.getElementById("rrsp").value || "0");
        const otherCredits = parseFloat(
          document.getElementById("otherCredits").value || "0"
        );
        const cppEiMode = document.getElementById("cppEiToggle").value;
        const incomeType = document.getElementById("incomeType").value;

        const errorEl = document.getElementById("calcError");
        if (isNaN(income) || income < 0) {
          errorEl.classList.remove("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const taxable = Math.max(0, income - Math.max(0, rrsp));

        // Provincial tax before credits
        const peiRes = calcBracketTax(taxable, cfg.peiBrackets);
        let peiTax = peiRes.tax;

        // Federal tax before credits
        const fedRes = calcBracketTax(taxable, cfg.fedBrackets);
        let fedTax = fedRes.tax;

        // Non-refundable credits: basic + user-entered
        const peiCreditBase = cfg.peiBasicAmount;
        const fedCreditBase = cfg.fedBasicAmount;

        const peiCredit =
          peiCreditBase * cfg.peiLowestRate +
          (otherCredits * cfg.peiLowestRate) / 2;
        const fedCredit =
          fedCreditBase * cfg.fedLowestRate +
          (otherCredits * cfg.fedLowestRate) / 2;

        peiTax = Math.max(0, peiTax - peiCredit);
        fedTax = Math.max(0, fedTax - fedCredit);

        // CPP & EI
        let cpp = 0,
          ei = 0;
        if (cppEiMode === "auto" && incomeType === "employment") {
          const pensionable = Math.min(
            Math.max(0, income - cfg.cpp.basicExemption),
            cfg.cpp.maxPensionable - cfg.cpp.basicExemption
          );
          cpp = pensionable * cfg.cpp.rate;

          const insurable = Math.min(income, cfg.ei.maxInsurable);
          ei = insurable * cfg.ei.rate;
        }

        const cppEi = cpp + ei;
        const totalTax = peiTax + fedTax + cppEi;
        const netIncome = income - totalTax;

        const avgPei = income > 0 ? peiTax / income : 0;
        const avgTotal = income > 0 ? totalTax / income : 0;
        const margPei = peiRes.lastRate;
        const margFed = fedRes.lastRate;
        const margCombined = margPei + margFed;

        // Update UI
        document.getElementById("resYear").textContent = year;
        document.getElementById("resTaxable").textContent =
          formatMoney(taxable);
        document.getElementById("resPeiTax").textContent = formatMoney(peiTax);
        document.getElementById("resFedTax").textContent = formatMoney(fedTax);
        document.getElementById("resCppEi").textContent = formatMoney(cppEi);
        document.getElementById("resTotalTax").textContent =
          formatMoney(totalTax);
        document.getElementById("resNet").textContent = formatMoney(netIncome);

        document.getElementById("resAvgPei").textContent =
          formatPercent(avgPei);
        document.getElementById("resAvgTotal").textContent =
          formatPercent(avgTotal);
        document.getElementById("resMargPei").textContent =
          formatPercent(margPei);
        document.getElementById("resMargFed").textContent =
          formatPercent(margFed);
        document.getElementById("resMargCombined").textContent =
          formatPercent(margCombined);

        updateBars(peiTax, fedTax, cppEi);
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculatePeiTax);
        document.getElementById("resetBtn").addEventListener("click", () => {
          document.getElementById("taxYear").value = "2025";
          document.getElementById("incomeType").value = "employment";
          document.getElementById("grossIncome").value = 60000;
          document.getElementById("rrsp").value = 0;
          document.getElementById("otherCredits").value = 0;
          document.getElementById("cppEiToggle").value = "auto";
          calculatePeiTax();
        });
        [
          "taxYear",
          "incomeType",
          "grossIncome",
          "rrsp",
          "otherCredits",
          "cppEiToggle",
        ].forEach((id) => {
          document.getElementById(id).addEventListener("change", () => {
            if (id === "grossIncome") return; // avoid recalculating on every keypress
            calculatePeiTax();
          });
        });
        calculatePeiTax();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
