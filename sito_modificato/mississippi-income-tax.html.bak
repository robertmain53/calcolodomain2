    <script>
      // Simple Mississippi income tax model with phase-out by year.
      // NOTE: This is an educational approximation, not official tax advice.

      function getPeriodsPerYear(freq) {
        switch (freq) {
          case "monthly":
            return 12;
          case "biweekly":
            return 26;
          case "weekly":
            return 52;
          default:
            return 1;
        }
      }

      function getMsStandardDeduction(status) {
        // Very rough approximations; user can override via itemized field.
        switch (status) {
          case "married_joint":
          case "head":
            return 4600;
          case "married_separate":
            return 2300;
          case "single":
          default:
            return 2300;
        }
      }

      function getMsExemptionDefault(status) {
        // Approximate personal exemption amounts.
        switch (status) {
          case "married_joint":
            return 6000;
          case "head":
            return 4000;
          case "married_separate":
            return 3000;
          case "single":
          default:
            return 3000;
        }
      }

      function getMsRateAndThreshold(year) {
        // Simplified representation of Mississippi phase-out.
        if (year === 2022) {
          return { type: "tiered" };
        }
        if (year === 2023) {
          return { type: "flat", rate: 0.05, exempt: 10000 };
        }
        // 2024+ – illustrative lower flat rate and same threshold
        return { type: "flat", rate: 0.047, exempt: 10000 };
      }

      function computeMsTax(taxableIncome, year) {
        const cfg = getMsRateAndThreshold(year);
        if (taxableIncome <= 0) return 0;

        if (cfg.type === "flat") {
          const base = Math.max(0, taxableIncome - (cfg.exempt || 0));
          return base * cfg.rate;
        }

        // 2022 tiered system (simplified):
        // 0% on first $5,000; 4% on next $5,000; 5% above $10,000.
        let tax = 0;
        const firstBand = Math.min(5000, taxableIncome);
        const secondBand = Math.min(5000, Math.max(0, taxableIncome - 5000));
        const remaining = Math.max(0, taxableIncome - 10000);

        tax += 0 * firstBand;
        tax += 0.04 * secondBand;
        tax += 0.05 * remaining;
        return tax;
      }

      function formatMoney(v) {
        if (!isFinite(v)) return "$0";
        return "$" + v.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function formatPercent(v) {
        if (!isFinite(v)) return "0%";
        return (v * 100).toFixed(2) + "%";
      }

      function calculateMsTax() {
        const year = parseInt(document.getElementById("tax-year").value, 10);
        const status = document.getElementById("filing-status").value;
        const freq = document.getElementById("pay-frequency").value;

        const grossInput =
          parseFloat(document.getElementById("gross-income").value) || 0;
        const preTaxInput =
          parseFloat(document.getElementById("pre-tax-deductions").value) || 0;
        const itemizedInput =
          parseFloat(document.getElementById("ms-deductions").value) || 0;
        const exemptionsInput =
          parseFloat(document.getElementById("ms-exemptions").value) || 0;

        const periods = getPeriodsPerYear(freq);
        const annualGross = grossInput * periods;
        const annualPreTax = preTaxInput * periods;

        const adjustedIncome = Math.max(0, annualGross - annualPreTax);

        const stdDeduction = getMsStandardDeduction(status);
        const deductions = itemizedInput > 0 ? itemizedInput : stdDeduction;

        const defaultExempt = getMsExemptionDefault(status);
        const exemptions =
          exemptionsInput > 0 ? exemptionsInput : defaultExempt;

        const taxableIncome = Math.max(
          0,
          adjustedIncome - deductions - exemptions
        );
        const msTax = computeMsTax(taxableIncome, year);
        const effectiveRate = taxableIncome > 0 ? msTax / taxableIncome : 0;
        const takeHome = adjustedIncome - msTax;
        const perPayTax = periods > 0 ? msTax / periods : msTax;

        // Update main results
        document.getElementById("result-ms-tax").textContent =
          formatMoney(msTax);
        document.getElementById("result-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("result-taxable-income").textContent =
          formatMoney(taxableIncome);
        document.getElementById("result-takehome").textContent =
          formatMoney(takeHome);
        document.getElementById("result-per-pay").textContent =
          formatMoney(perPayTax);

        // Breakdown
        document.getElementById("bd-gross").textContent =
          formatMoney(annualGross);
        document.getElementById("bd-pre-tax").textContent =
          formatMoney(annualPreTax);
        document.getElementById("bd-deductions").textContent =
          formatMoney(deductions);
        document.getElementById("bd-exemptions").textContent =
          formatMoney(exemptions);
        document.getElementById("bd-taxable").textContent =
          formatMoney(taxableIncome);
        document.getElementById("bd-tax").textContent = formatMoney(msTax);
        document.getElementById("bd-rate").textContent =
          formatPercent(effectiveRate);
      }

      function resetMsForm() {
        document.getElementById("tax-year").value = "2024";
        document.getElementById("filing-status").value = "single";
        document.getElementById("pay-frequency").value = "annual";
        document.getElementById("gross-income").value = 60000;
        document.getElementById("pre-tax-deductions").value = 0;
        document.getElementById("ms-deductions").value = 0;
        document.getElementById("ms-exemptions").value = 0;
        calculateMsTax();
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculateMsTax();
          });

        document
          .getElementById("reset-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            resetMsForm();
          });

        // Auto‑recalculate on input changes for better UX
        [
          "tax-year",
          "filing-status",
          "pay-frequency",
          "gross-income",
          "pre-tax-deductions",
          "ms-deductions",
          "ms-exemptions",
        ].forEach(function (id) {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("change", calculateMsTax);
            el.addEventListener("input", function () {
              // Debounce slightly
              clearTimeout(el._calcTimeout);
              el._calcTimeout = setTimeout(calculateMsTax, 300);
            });
          }
        });

        calculateMsTax();
      });
    </script>

