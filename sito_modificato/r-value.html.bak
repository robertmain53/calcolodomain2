    <script>
      // Tab handling
      const tabs = {
        "tab-ru": "panel-ru",
        "tab-thickness": "panel-thickness",
        "tab-layers": "panel-layers",
      };
      Object.keys(tabs).forEach((tabId) => {
        document.getElementById(tabId).addEventListener("click", () => {
          // toggle tab styles
          Object.keys(tabs).forEach((id) => {
            const btn = document.getElementById(id);
            const panel = document.getElementById(tabs[id]);
            if (id === tabId) {
              btn.classList.add("tab-active");
              panel.classList.remove("hidden");
            } else {
              btn.classList.remove("tab-active");
              panel.classList.add("hidden");
            }
          });
        });
      });

      // R <-> U converter
      const rInput = document.getElementById("r-input");
      const uInput = document.getElementById("u-input");
      const ruSystem = document.getElementById("ru-system");
      const rUnitLabel = document.getElementById("r-unit-label");
      const uUnitLabel = document.getElementById("u-unit-label");

      function updateRUUnits() {
        if (ruSystem.value === "imperial") {
          rUnitLabel.textContent = "Unit: ft²·°F·h/BTU";
          uUnitLabel.textContent = "Unit: BTU/(ft²·°F·h)";
        } else {
          rUnitLabel.textContent = "Unit: m²·K/W";
          uUnitLabel.textContent = "Unit: W/(m²·K)";
        }
      }

      function computeFromR() {
        const R = parseFloat(rInput.value);
        if (!isNaN(R) && R !== 0) {
          const U = 1 / R;
          uInput.value = U.toFixed(4);
        } else if (rInput.value === "") {
          uInput.value = "";
        }
      }

      function computeFromU() {
        const U = parseFloat(uInput.value);
        if (!isNaN(U) && U !== 0) {
          const R = 1 / U;
          rInput.value = R.toFixed(3);
        } else if (uInput.value === "") {
          rInput.value = "";
        }
      }

      rInput.addEventListener("input", () => {
        if (rInput === document.activeElement) {
          uInput.value = "";
          computeFromR();
        }
      });
      uInput.addEventListener("input", () => {
        if (uInput === document.activeElement) {
          rInput.value = "";
          computeFromU();
        }
      });
      ruSystem.addEventListener("change", updateRUUnits);
      updateRUUnits();

      // Thickness from R
      const thSystem = document.getElementById("th-system");
      const thR = document.getElementById("th-r");
      const thK = document.getElementById("th-k");
      const thRUnitLabel = document.getElementById("th-r-unit-label");
      const thKUnitLabel = document.getElementById("th-k-unit-label");
      const thicknessResult = document.getElementById("thickness-result");
      const thicknessUnitLabel = document.getElementById(
        "thickness-unit-label"
      );

      function updateThicknessUnits() {
        if (thSystem.value === "metric") {
          thRUnitLabel.textContent = "Unit: m²·K/W";
          thKUnitLabel.textContent = "Unit: W/m·K";
          thicknessUnitLabel.textContent = "Unit: meters (m)";
        } else {
          thRUnitLabel.textContent = "Unit: ft²·°F·h/BTU";
          thKUnitLabel.textContent = "Unit: BTU·in/ft²·°F·h";
          thicknessUnitLabel.textContent = "Unit: inches (in)";
        }
        computeThickness();
      }

      function computeThickness() {
        const R = parseFloat(thR.value);
        const k = parseFloat(thK.value);
        if (!isNaN(R) && !isNaN(k) && R > 0 && k > 0) {
          const L = R * k;
          thicknessResult.textContent = L.toFixed(3);
        } else {
          thicknessResult.textContent = "—";
        }
      }

      thSystem.addEventListener("change", updateThicknessUnits);
      thR.addEventListener("input", computeThickness);
      thK.addEventListener("input", computeThickness);
      updateThicknessUnits();

      // Layered assembly
      const layersContainer = document.getElementById("layers-container");
      const addLayerBtn = document.getElementById("add-layer");
      const resetLayersBtn = document.getElementById("reset-layers");
      const layersRTotal = document.getElementById("layers-r-total");
      const layersUTotal = document.getElementById("layers-u-total");

      let layerCount = 0;

      function createLayerRow(name = "", rValue = "") {
        layerCount++;
        const row = document.createElement("div");
        row.className = "grid grid-cols-12 gap-2 items-end";
        row.dataset.layerId = layerCount;

        row.innerHTML = `
      <div class="col-span-6">
        <label class="block text-xs font-medium text-gray-700 mb-1">Layer name</label>
        <input type="text" class="w-full border rounded-md px-2 py-1.5 text-sm layer-name" placeholder="e.g. Fiberglass batt" value="${name}">
      </div>
      <div class="col-span-4">
        <label class="block text-xs font-medium text-gray-700 mb-1">R-value</label>
        <input type="number" step="0.01" class="w-full border rounded-md px-2 py-1.5 text-sm layer-r" placeholder="e.g. 13" value="${rValue}">
      </div>
      <div class="col-span-2 flex items-center justify-end">
        <button type="button" class="text-xs text-red-600 hover:underline remove-layer">Remove</button>
      </div>
    `;

        layersContainer.appendChild(row);

        row
          .querySelector(".layer-r")
          .addEventListener("input", updateLayerTotals);
        row.querySelector(".remove-layer").addEventListener("click", () => {
          row.remove();
          updateLayerTotals();
        });
      }

      function updateLayerTotals() {
        const rInputs = layersContainer.querySelectorAll(".layer-r");
        let totalR = 0;
        rInputs.forEach((input) => {
          const val = parseFloat(input.value);
          if (!isNaN(val) && val > 0) {
            totalR += val;
          }
        });
        if (totalR > 0) {
          layersRTotal.textContent = totalR.toFixed(2);
          layersUTotal.textContent = (1 / totalR).toFixed(4);
        } else {
          layersRTotal.textContent = "—";
          layersUTotal.textContent = "—";
        }
      }

      addLayerBtn.addEventListener("click", () => {
        createLayerRow();
      });

      resetLayersBtn.addEventListener("click", () => {
        layersContainer.innerHTML = "";
        initDefaultLayers();
        updateLayerTotals();
      });

      function initDefaultLayers() {
        createLayerRow("Interior air film", "0.68");
        createLayerRow('1/2" drywall', "0.45");
        createLayerRow("Fiberglass batt", "13");
        createLayerRow("OSB sheathing", "0.50");
        createLayerRow("Exterior air film", "0.17");
        updateLayerTotals();
      }

      initDefaultLayers();
    </script>

