    <script>
      // Utility: format currency
      function formatCurrency(value, symbol) {
        if (isNaN(value)) return symbol + "0";
        const absVal = Math.abs(value);
        const decimals = absVal >= 1000 ? 0 : 2;
        return (
          symbol +
          value.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          })
        );
      }

      // Row template generator
      function createCostRow(prefix, index) {
        const row = document.createElement("div");
        row.className = "flex gap-2 items-center";
        row.dataset.index = index;

        row.innerHTML = `
      <input type="text" class="flex-1 border border-gray-300 rounded-md px-2 py-1 text-sm" placeholder="Description (e.g. Recruiter salary allocation)">
      <input type="number" min="0" step="0.01" class="w-32 border border-gray-300 rounded-md px-2 py-1 text-sm text-right" placeholder="0.00">
      <button type="button" class="text-xs text-red-500 hover:underline remove-row">Remove</button>
    `;
        return row;
      }

      function recalcTotals() {
        const currencySymbol =
          document.getElementById("currency-symbol").value || "$";
        const hires =
          parseFloat(document.getElementById("number-of-hires").value) || 0;

        function sumContainer(containerId) {
          const container = document.getElementById(containerId);
          let sum = 0;
          if (!container) return 0;
          container
            .querySelectorAll('input[type="number"]')
            .forEach((input) => {
              const v = parseFloat(input.value);
              if (!isNaN(v)) sum += v;
            });
          return sum;
        }

        const internalTotal = sumContainer("internal-costs-rows");
        const externalTotal = sumContainer("external-costs-rows");
        const onboardingTotal = sumContainer("onboarding-costs-rows");
        const total = internalTotal + externalTotal + onboardingTotal;
        const cph = hires > 0 ? total / hires : 0;

        document.getElementById("internal-total-display").textContent =
          formatCurrency(internalTotal, currencySymbol);
        document.getElementById("external-total-display").textContent =
          formatCurrency(externalTotal, currencySymbol);
        document.getElementById("onboarding-total-display").textContent =
          formatCurrency(onboardingTotal, currencySymbol);
        document.getElementById("total-cost-display").textContent =
          formatCurrency(total, currencySymbol);
        document.getElementById("cost-per-hire-display").textContent =
          hires > 0
            ? formatCurrency(cph, currencySymbol)
            : currencySymbol + "0";
      }

      function addRow(containerId) {
        const container = document.getElementById(containerId);
        const index = container.children.length;
        const row = createCostRow(containerId, index);
        container.appendChild(row);
        row.querySelectorAll("input").forEach((input) => {
          input.addEventListener("input", recalcTotals);
        });
        row.querySelector(".remove-row").addEventListener("click", () => {
          row.remove();
          recalcTotals();
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        // Initialize default rows
        addRow("internal-costs-rows");
        addRow("external-costs-rows");

        document
          .getElementById("add-internal-row")
          .addEventListener("click", () => addRow("internal-costs-rows"));
        document
          .getElementById("add-external-row")
          .addEventListener("click", () => addRow("external-costs-rows"));
        document
          .getElementById("add-onboarding-row")
          .addEventListener("click", () => addRow("onboarding-costs-rows"));

        document
          .getElementById("currency-symbol")
          .addEventListener("input", recalcTotals);
        document
          .getElementById("number-of-hires")
          .addEventListener("input", recalcTotals);

        document
          .getElementById("reset-calculator")
          .addEventListener("click", () => {
            document.getElementById("currency-symbol").value = "$";
            document.getElementById("period-label").value = "";
            document.getElementById("number-of-hires").value = 5;

            [
              "internal-costs-rows",
              "external-costs-rows",
              "onboarding-costs-rows",
            ].forEach((id) => {
              const container = document.getElementById(id);
              container.innerHTML = "";
            });
            addRow("internal-costs-rows");
            addRow("external-costs-rows");
            recalcTotals();
          });

        document
          .getElementById("export-summary")
          .addEventListener("click", () => {
            const currencySymbol =
              document.getElementById("currency-symbol").value || "$";
            const period =
              document.getElementById("period-label").value || "Current period";
            const hires =
              parseFloat(document.getElementById("number-of-hires").value) || 0;

            function collectItems(containerId) {
              const container = document.getElementById(containerId);
              const items = [];
              container.querySelectorAll("div[data-index]").forEach((row) => {
                const [descInput, valueInput] = row.querySelectorAll("input");
                const desc = descInput.value || "Unnamed item";
                const val = parseFloat(valueInput.value) || 0;
                items.push({ desc, val });
              });
              return items;
            }

            const internalItems = collectItems("internal-costs-rows");
            const externalItems = collectItems("external-costs-rows");
            const onboardingItems = collectItems("onboarding-costs-rows");

            const internalTotal = internalItems.reduce((s, i) => s + i.val, 0);
            const externalTotal = externalItems.reduce((s, i) => s + i.val, 0);
            const onboardingTotal = onboardingItems.reduce(
              (s, i) => s + i.val,
              0
            );
            const total = internalTotal + externalTotal + onboardingTotal;
            const cph = hires > 0 ? total / hires : 0;

            let text = "";
            text += `Cost per hire summary – ${period}\n\n`;
            text += `Number of hires: ${hires}\n`;
            text += `Total internal costs: ${formatCurrency(
              internalTotal,
              currencySymbol
            )}\n`;
            internalItems.forEach((i) => {
              text += `  - ${i.desc}: ${formatCurrency(
                i.val,
                currencySymbol
              )}\n`;
            });
            text += `\nTotal external costs: ${formatCurrency(
              externalTotal,
              currencySymbol
            )}\n`;
            externalItems.forEach((i) => {
              text += `  - ${i.desc}: ${formatCurrency(
                i.val,
                currencySymbol
              )}\n`;
            });
            if (onboardingItems.length > 0) {
              text += `\nOnboarding & setup costs: ${formatCurrency(
                onboardingTotal,
                currencySymbol
              )}\n`;
              onboardingItems.forEach((i) => {
                text += `  - ${i.desc}: ${formatCurrency(
                  i.val,
                  currencySymbol
                )}\n`;
              });
            }
            text += `\nTotal recruiting cost: ${formatCurrency(
              total,
              currencySymbol
            )}\n`;
            text += `Cost per hire: ${formatCurrency(cph, currencySymbol)}\n`;

            if (navigator.clipboard && navigator.clipboard.writeText) {
              navigator.clipboard
                .writeText(text)
                .then(() => {
                  alert(
                    "Summary copied to clipboard. You can paste it into email, Slack, or a report."
                  );
                })
                .catch(() => {
                  alert(
                    "Could not copy to clipboard. You can select and copy manually:\n\n" +
                      text
                  );
                });
            } else {
              alert("Summary:\n\n" + text);
            }
          });

        // Simple FAQ toggle (in addition to global script_faq, safe if both run)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              if (isHidden) answer.classList.remove("hidden");
            });
          });

        recalcTotals();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
