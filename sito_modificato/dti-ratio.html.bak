    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function classifyDTI(value) {
        if (!isFinite(value) || value < 0)
          return {
            label: "Waiting for input",
            color: "bg-gray-100 text-gray-700",
          };
        if (value <= 30)
          return {
            label: "Excellent",
            color: "bg-emerald-100 text-emerald-800",
          };
        if (value <= 36)
          return { label: "Good", color: "bg-green-100 text-green-800" };
        if (value <= 43)
          return {
            label: "Borderline",
            color: "bg-yellow-100 text-yellow-800",
          };
        if (value <= 50)
          return { label: "High", color: "bg-orange-100 text-orange-800" };
        return { label: "Very high", color: "bg-red-100 text-red-800" };
      }

      function normalizeIncome(amount, frequency) {
        const val = parseFloat(amount);
        if (!isFinite(val) || val <= 0) return 0;
        switch (frequency) {
          case "annual":
            return val / 12;
          case "weekly":
            return (val * 52) / 12;
          case "biweekly":
            return (val * 26) / 12;
          case "semimonthly":
            return val * 2;
          case "monthly":
          default:
            return val;
        }
      }

      function calculateDTI() {
        const incomeAmount = parseFloat(
          document.getElementById("income-amount").value
        );
        const incomeFrequency =
          document.getElementById("income-frequency").value;
        const monthlyIncome = normalizeIncome(incomeAmount, incomeFrequency);

        document.getElementById("normalized-income").textContent =
          monthlyIncome > 0 ? formatCurrency(monthlyIncome) : "$0.00";

        const housingPayment =
          parseFloat(document.getElementById("housing-payment").value) || 0;
        const housingEscrow =
          parseFloat(document.getElementById("housing-escrow").value) || 0;
        const housingTotal = housingPayment + housingEscrow;

        let otherDebts = 0;
        document.querySelectorAll("#debts-body tr").forEach((row) => {
          const include = row.querySelector(".debt-include");
          const amountInput = row.querySelector(".debt-amount");
          if (include && include.checked && amountInput) {
            const val = parseFloat(amountInput.value);
            if (isFinite(val) && val > 0) otherDebts += val;
          }
        });

        const totalDebts = housingTotal + otherDebts;
        document.getElementById("total-debts").textContent =
          formatCurrency(totalDebts);

        const frontEndElem = document.getElementById("front-end-dti");
        const backEndElem = document.getElementById("back-end-dti");
        const frontLabelElem = document.getElementById("front-end-label");
        const backLabelElem = document.getElementById("back-end-label");
        const interpretationElem =
          document.getElementById("dti-interpretation");

        if (monthlyIncome <= 0) {
          frontEndElem.textContent = "–";
          backEndElem.textContent = "–";
          frontLabelElem.textContent = "Waiting for input";
          backLabelElem.textContent = "Waiting for input";
          frontLabelElem.className =
            "mt-1 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-full bg-gray-100 text-gray-700";
          backLabelElem.className = frontLabelElem.className;
          interpretationElem.textContent =
            "Enter your income and debts to see how your DTI compares to common lender guidelines.";
          return;
        }

        const frontDTI = (housingTotal / monthlyIncome) * 100;
        const backDTI = (totalDebts / monthlyIncome) * 100;

        frontEndElem.textContent = frontDTI.toFixed(1) + "%";
        backEndElem.textContent = backDTI.toFixed(1) + "%";

        const frontClass = classifyDTI(frontDTI);
        const backClass = classifyDTI(backDTI);

        frontLabelElem.textContent = frontClass.label;
        backLabelElem.textContent = backClass.label;
        frontLabelElem.className =
          "mt-1 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-full " +
          frontClass.color;
        backLabelElem.className =
          "mt-1 text-xs font-medium inline-flex items-center px-2 py-0.5 rounded-full " +
          backClass.color;

        let message = `Your back-end DTI is approximately ${backDTI.toFixed(
          1
        )}%. `;
        if (backDTI <= 36) {
          message +=
            "This is generally considered a comfortable range for most conventional mortgages.";
        } else if (backDTI <= 43) {
          message +=
            "This is on the higher side but often still acceptable, especially with strong credit and savings.";
        } else if (backDTI <= 50) {
          message +=
            "This is high. Some loan programs may still approve you, but you might face stricter conditions or need compensating factors.";
        } else {
          message +=
            "This is very high. You may want to reduce debt or increase income before applying for major new loans.";
        }
        interpretationElem.textContent = message;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("dti-form");
        form.addEventListener("input", calculateDTI);
        form.addEventListener("change", calculateDTI);

        document
          .getElementById("add-debt-row")
          .addEventListener("click", function () {
            const tbody = document.getElementById("debts-body");
            const tr = document.createElement("tr");
            tr.innerHTML = `
        <td class="px-3 py-2 text-center">
          <input type="checkbox" class="debt-include h-4 w-4 text-blue-600" checked>
        </td>
        <td class="px-3 py-2">
          <select class="debt-type w-full border-gray-300 rounded-md">
            <option value="car">Car loan / lease</option>
            <option value="student">Student loan</option>
            <option value="credit" selected>Credit card (minimum)</option>
            <option value="personal">Personal / installment loan</option>
            <option value="other">Other recurring debt</option>
          </select>
        </td>
        <td class="px-3 py-2">
          <div class="flex items-center">
            <span class="text-gray-500 mr-1">$</span>
            <input type="number" class="debt-amount w-full border-gray-300 rounded-md" min="0" step="0.01" value="0">
          </div>
        </td>
        <td class="px-3 py-2 text-gray-500">Custom debt</td>
        <td class="px-3 py-2 text-center">
          <button type="button" class="remove-debt-row text-xs text-red-500 hover:underline">Remove</button>
        </td>
      `;
            tbody.appendChild(tr);
            calculateDTI();
          });

        document
          .getElementById("debts-body")
          .addEventListener("click", function (e) {
            if (e.target && e.target.classList.contains("remove-debt-row")) {
              const row = e.target.closest("tr");
              if (
                row &&
                document.querySelectorAll("#debts-body tr").length > 1
              ) {
                row.remove();
                calculateDTI();
              }
            }
          });

        document
          .getElementById("reset-dti")
          .addEventListener("click", function () {
            document.getElementById("income-amount").value = 6000;
            document.getElementById("income-frequency").value = "monthly";
            document.getElementById("income-type").value = "gross";
            document.getElementById("housing-payment").value = 1800;
            document.getElementById("housing-escrow").value = 300;

            const tbody = document.getElementById("debts-body");
            tbody.innerHTML = "";
            const defaultRows = [
              { type: "car", amount: 350, note: "Example: car payment" },
              { type: "student", amount: 250, note: "Example: student loan" },
              {
                type: "credit",
                amount: 150,
                note: "Example: credit card minimums",
              },
            ];
            defaultRows.forEach((row) => {
              const tr = document.createElement("tr");
              tr.innerHTML = `
          <td class="px-3 py-2 text-center">
            <input type="checkbox" class="debt-include h-4 w-4 text-blue-600" checked>
          </td>
          <td class="px-3 py-2">
            <select class="debt-type w-full border-gray-300 rounded-md">
              <option value="car" ${
                row.type === "car" ? "selected" : ""
              }>Car loan / lease</option>
              <option value="student" ${
                row.type === "student" ? "selected" : ""
              }>Student loan</option>
              <option value="credit" ${
                row.type === "credit" ? "selected" : ""
              }>Credit card (minimum)</option>
              <option value="personal">Personal / installment loan</option>
              <option value="other">Other recurring debt</option>
            </select>
          </td>
          <td class="px-3 py-2">
            <div class="flex items-center">
              <span class="text-gray-500 mr-1">$</span>
              <input type="number" class="debt-amount w-full border-gray-300 rounded-md" min="0" step="0.01" value="${
                row.amount
              }">
            </div>
          </td>
          <td class="px-3 py-2 text-gray-500">${row.note}</td>
          <td class="px-3 py-2 text-center">
            <button type="button" class="remove-debt-row text-xs text-red-500 hover:underline">Remove</button>
          </td>
        `;
              tbody.appendChild(tr);
            });

            calculateDTI();
          });

        calculateDTI();
      });
    </script>

