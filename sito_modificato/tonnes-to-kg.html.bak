    <script>
      // Helper: format number with chosen decimals, avoid trailing zeros issues
      function formatNumber(value, decimals) {
        if (!isFinite(value)) return "";
        const factor = Math.pow(10, decimals);
        const rounded = Math.round(value * factor) / factor;
        return rounded.toFixed(decimals);
      }

      (function () {
        const tonnesInput = document.getElementById("tonnesInput");
        const kgInput = document.getElementById("kgInput");
        const decimalsSelect = document.getElementById("decimalPlaces");
        const summary = document.getElementById("conversionSummary");
        const swapBtn = document.getElementById("swapBtn");
        const clearBtn = document.getElementById("clearBtn");

        let activeDirection = "t-to-kg"; // or 'kg-to-t'
        let isUpdating = false;

        function getDecimals() {
          return parseInt(decimalsSelect.value, 10) || 0;
        }

        function updateFromTonnes() {
          if (isUpdating) return;
          const val = parseFloat(tonnesInput.value);
          if (isNaN(val)) {
            kgInput.value = "";
            summary.classList.add("hidden");
            return;
          }
          isUpdating = true;
          const kg = val * 1000;
          kgInput.value = formatNumber(kg, getDecimals());
          summary.textContent =
            val + " tonnes = " + formatNumber(kg, getDecimals()) + " kilograms";
          summary.classList.remove("hidden");
          activeDirection = "t-to-kg";
          isUpdating = false;
        }

        function updateFromKg() {
          if (isUpdating) return;
          const val = parseFloat(kgInput.value);
          if (isNaN(val)) {
            tonnesInput.value = "";
            summary.classList.add("hidden");
            return;
          }
          isUpdating = true;
          const t = val / 1000;
          tonnesInput.value = formatNumber(t, getDecimals());
          summary.textContent =
            val + " kilograms = " + formatNumber(t, getDecimals()) + " tonnes";
          summary.classList.remove("hidden");
          activeDirection = "kg-to-t";
          isUpdating = false;
        }

        tonnesInput.addEventListener("input", updateFromTonnes);
        kgInput.addEventListener("input", updateFromKg);
        decimalsSelect.addEventListener("change", function () {
          if (activeDirection === "t-to-kg") {
            updateFromTonnes();
          } else if (activeDirection === "kg-to-t") {
            updateFromKg();
          }
        });

        swapBtn.addEventListener("click", function () {
          // Swap current values logically: if user was entering tonnes, move that value to kg, etc.
          const tVal = tonnesInput.value;
          const kgVal = kgInput.value;
          tonnesInput.value = kgVal;
          kgInput.value = tVal;
          // Recalculate based on new active direction
          if (activeDirection === "t-to-kg") {
            activeDirection = "kg-to-t";
            updateFromKg();
          } else {
            activeDirection = "t-to-kg";
            updateFromTonnes();
          }
        });

        clearBtn.addEventListener("click", function () {
          tonnesInput.value = "";
          kgInput.value = "";
          summary.classList.add("hidden");
        });

        // Batch conversion
        const batchTonnes = document.getElementById("batchTonnes");
        const batchKg = document.getElementById("batchKg");
        const batchConvertBtn = document.getElementById("batchConvertBtn");
        const batchClearBtn = document.getElementById("batchClearBtn");

        function parseList(input) {
          if (!input) return [];
          return input
            .split(/[\s,;]+/)
            .map(function (v) {
              return v.trim();
            })
            .filter(function (v) {
              return v.length > 0;
            });
        }

        batchConvertBtn.addEventListener("click", function () {
          const raw = batchTonnes.value;
          const parts = parseList(raw);
          const decimals = getDecimals();
          const results = parts.map(function (p) {
            const num = parseFloat(p);
            if (isNaN(num)) return "Invalid";
            const kg = num * 1000;
            return formatNumber(kg, decimals);
          });
          batchKg.value = results.join("\n");
        });

        batchClearBtn.addEventListener("click", function () {
          batchTonnes.value = "";
          batchKg.value = "";
        });
      })();
    </script>

