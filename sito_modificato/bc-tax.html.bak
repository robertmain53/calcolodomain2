    <script>
      // --- Tax parameters (approximate, for planning only) ---
      const TAX_CONFIG = {
        2025: {
          federal: {
            brackets: [
              { upTo: 55867, rate: 0.15 },
              { upTo: 111733, rate: 0.205 },
              { upTo: 173205, rate: 0.26 },
              { upTo: 246752, rate: 0.29 },
              { upTo: Infinity, rate: 0.33 },
            ],
            basicPersonalAmount: 15805, // approx
            lowestRate: 0.15,
          },
          bc: {
            brackets: [
              { upTo: 47937, rate: 0.0506 },
              { upTo: 95875, rate: 0.077 },
              { upTo: 110076, rate: 0.105 },
              { upTo: 133664, rate: 0.1229 },
              { upTo: 181232, rate: 0.147 },
              { upTo: 252752, rate: 0.168 },
              { upTo: Infinity, rate: 0.205 },
            ],
            basicPersonalAmount: 12580, // approx
            lowestRate: 0.0506,
          },
          cpp: {
            rate: 0.0595,
            basicExemption: 3500,
            maxPensionable: 72000, // approx
          },
          ei: {
            rate: 0.0166,
            maxInsurable: 64000, // approx
          },
        },
        2024: {
          // Use same as 2025 for now; can be updated later
        },
      };

      function calcBracketTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, b.upTo - lastLimit);
          if (span > 0) {
            tax += span * b.rate;
            remaining -= span;
          }
          lastLimit = b.upTo;
        }
        return tax;
      }

      function formatMoney(v) {
        if (!isFinite(v)) return "$0";
        return v.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(v) {
        if (!isFinite(v)) return "0%";
        return (v * 100).toFixed(1) + "%";
      }

      function getStatus() {
        const btns = document.querySelectorAll(".status-btn");
        for (const b of btns) {
          if (b.classList.contains("bg-blue-50")) return b.dataset.status;
        }
        return "single";
      }

      function calculateBCTax() {
        const year = document.getElementById("tax-year").value || "2025";
        const cfg =
          TAX_CONFIG[year] && TAX_CONFIG[year].federal
            ? TAX_CONFIG[year]
            : TAX_CONFIG["2025"];

        const income = parseFloat(document.getElementById("income").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("other-income").value) || 0;
        const rrsp = Math.max(
          0,
          parseFloat(document.getElementById("rrsp").value) || 0
        );
        const extraCredits = Math.max(
          0,
          parseFloat(document.getElementById("extra-credits").value) || 0
        );
        const includeCPP = document.getElementById("include-cpp").checked;
        const includeEI = document.getElementById("include-ei").checked;

        const totalIncome = Math.max(0, income + otherIncome);
        const taxableIncome = Math.max(0, totalIncome - rrsp);

        const federalGross = calcBracketTax(
          taxableIncome,
          cfg.federal.brackets
        );
        const bcGross = calcBracketTax(taxableIncome, cfg.bc.brackets);

        // Basic personal amounts + extra credits
        const federalCreditsBase = cfg.federal.basicPersonalAmount;
        const bcCreditsBase = cfg.bc.basicPersonalAmount;

        const federalCredits =
          (federalCreditsBase + extraCredits / 2) * cfg.federal.lowestRate;
        const bcCredits =
          (bcCreditsBase + extraCredits / 2) * cfg.bc.lowestRate;

        const federalTax = Math.max(0, federalGross - federalCredits);
        const bcTax = Math.max(0, bcGross - bcCredits);

        // CPP
        let cpp = 0;
        if (includeCPP) {
          const pensionable = Math.max(
            0,
            Math.min(income, cfg.cpp.maxPensionable) - cfg.cpp.basicExemption
          );
          cpp = Math.max(0, pensionable * cfg.cpp.rate);
        }

        // EI
        let ei = 0;
        if (includeEI) {
          const insurable = Math.min(income, cfg.ei.maxInsurable);
          ei = Math.max(0, insurable * cfg.ei.rate);
        }

        const totalTax = federalTax + bcTax;
        const totalDeductions = totalTax + cpp + ei;
        const netIncome = Math.max(0, totalIncome - totalDeductions);
        const effectiveRate = totalIncome > 0 ? totalTax / totalIncome : 0;

        // Update UI
        document.getElementById("net-income").textContent =
          formatMoney(netIncome);
        document.getElementById("total-tax").textContent =
          formatMoney(totalTax);
        document.getElementById("effective-rate").textContent =
          formatPercent(effectiveRate);

        document.getElementById("federal-tax").textContent =
          formatMoney(federalTax);
        document.getElementById("bc-tax").textContent = formatMoney(bcTax);
        document.getElementById("cpp").textContent = formatMoney(cpp);
        document.getElementById("ei").textContent = formatMoney(ei);
        document.getElementById("total-deductions").textContent =
          formatMoney(totalDeductions);

        const summary = document.getElementById("summary-line");
        if (totalIncome > 0) {
          summary.textContent = `On a total income of ${formatMoney(
            totalIncome
          )}, your estimated 2025 federal tax is ${formatMoney(
            federalTax
          )}, BC tax is ${formatMoney(
            bcTax
          )}, and your take‑home pay is about ${formatMoney(netIncome)}.`;
          summary.classList.remove("hidden");
        } else {
          summary.textContent = "";
          summary.classList.add("hidden");
        }

        // Bar chart
        const barFederal = document.getElementById("bar-federal");
        const barBC = document.getElementById("bar-bc");
        const barCPPEI = document.getElementById("bar-cpp-ei");
        const barCaption = document.getElementById("bar-caption");

        if (totalIncome > 0) {
          const federalShare = federalTax / totalIncome;
          const bcShare = bcTax / totalIncome;
          const cppEiShare = (cpp + ei) / totalIncome;

          barFederal.style.width = Math.min(100, federalShare * 100) + "%";
          barBC.style.width =
            Math.min(100, (federalShare + bcShare) * 100) + "%";
          barCPPEI.style.width =
            Math.min(100, (federalShare + bcShare + cppEiShare) * 100) + "%";

          barCaption.textContent = `Approximate shares of your income: ${formatPercent(
            federalShare
          )} federal tax, ${formatPercent(bcShare)} BC tax, ${formatPercent(
            cppEiShare
          )} CPP/EI.`;
        } else {
          barFederal.style.width = "0%";
          barBC.style.width = "0%";
          barCPPEI.style.width = "0%";
          barCaption.textContent =
            "Enter income and click “Calculate BC tax” to see the breakdown.";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        // Filing status toggle
        document.querySelectorAll(".status-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            document.querySelectorAll(".status-btn").forEach((b) => {
              b.classList.remove(
                "bg-blue-50",
                "border-blue-500",
                "text-blue-700",
                "font-medium"
              );
              b.classList.add("border-gray-300", "text-gray-700");
            });
            btn.classList.remove("border-gray-300", "text-gray-700");
            btn.classList.add(
              "bg-blue-50",
              "border-blue-500",
              "text-blue-700",
              "font-medium"
            );
          });
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateBCTax);

        // Recalculate on Enter in key fields
        ["income", "other-income", "rrsp", "extra-credits"].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              calculateBCTax();
            }
          });
        });

        // Initial calculation
        calculateBCTax();
      });
    </script>

