    <script>
      // Sync slider labels
      function bindSlider(id) {
        const slider = document.getElementById(id);
        const label = document.getElementById(id + "-value");
        if (!slider || !label) return;
        const update = () => {
          label.textContent = slider.value;
        };
        slider.addEventListener("input", update);
        update();
      }

      [
        "fitness",
        "firstAid",
        "navigation",
        "combat",
        "teamSkills",
        "teamTrust",
        "security",
        "escapeRoutes",
        "waterAccess",
        "weapons",
        "outbreak",
      ].forEach(bindSlider);

      function clamp(v, min, max) {
        return Math.max(min, Math.min(max, v));
      }

      function calcPersonal() {
        const fitness = +document.getElementById("fitness").value;
        const firstAid = +document.getElementById("firstAid").value;
        const navigation = +document.getElementById("navigation").value;
        const combat = +document.getElementById("combat").value;
        const avg = (fitness + firstAid + navigation + combat) / 4;
        return avg * 10; // 0–100
      }

      function calcTeam() {
        const adults = clamp(
          +document.getElementById("adults").value || 0,
          0,
          50
        );
        const children = clamp(
          +document.getElementById("children").value || 0,
          0,
          50
        );
        const teamSkills = +document.getElementById("teamSkills").value;
        const teamTrust = +document.getElementById("teamTrust").value;

        const total = adults + children;
        let sizeScore;
        if (total === 0) {
          sizeScore = 0;
        } else if (total === 1) {
          sizeScore = 40; // lone survivor
        } else if (total <= 6) {
          sizeScore = 80; // ideal small group
        } else if (total <= 12) {
          sizeScore = 65;
        } else {
          sizeScore = 45; // big groups are hard to manage
        }

        const kidsPenalty = children > 0 ? clamp(10 + children * 2, 0, 30) : 0;
        const raw =
          0.4 * sizeScore +
          0.3 * (teamSkills * 10) +
          0.3 * (teamTrust * 10) -
          kidsPenalty;
        return clamp(raw, 0, 100);
      }

      function calcShelter() {
        const shelterType = document.getElementById("shelterType").value;
        const environment = document.getElementById("environment").value;
        const security = +document.getElementById("security").value;
        const escapeRoutes = +document.getElementById("escapeRoutes").value;
        const waterAccess = +document.getElementById("waterAccess").value;

        let baseShelter;
        switch (shelterType) {
          case "bunker":
            baseShelter = 90;
            break;
          case "farm":
            baseShelter = 80;
            break;
          case "house":
            baseShelter = 70;
            break;
          case "apartment":
            baseShelter = 60;
            break;
          case "mobile":
            baseShelter = 50;
            break;
          default:
            baseShelter = 60;
        }

        let envMod;
        switch (environment) {
          case "denseCity":
            envMod = -10;
            break;
          case "suburb":
            envMod = 0;
            break;
          case "rural":
            envMod = +5;
            break;
          case "mountain":
            envMod = +10;
            break;
          default:
            envMod = 0;
        }

        const features = ((security + escapeRoutes + waterAccess) / 30) * 100;
        const raw = 0.5 * baseShelter + 0.4 * features + envMod;
        return clamp(raw, 0, 100);
      }

      function calcSupplies() {
        const adults = clamp(
          +document.getElementById("adults").value || 0,
          0,
          50
        );
        const children = clamp(
          +document.getElementById("children").value || 0,
          0,
          50
        );
        const people = Math.max(1, adults + children); // avoid div by zero, assume at least 1
        const foodDays = clamp(
          +document.getElementById("foodDays").value || 0,
          0,
          365
        );
        const waterDays = clamp(
          +document.getElementById("waterDays").value || 0,
          0,
          365
        );
        const medDays = clamp(
          +document.getElementById("medDays").value || 0,
          0,
          365
        );
        const weapons = +document.getElementById("weapons").value;

        const perCapFood = foodDays / people;
        const perCapWater = waterDays / people;
        const perCapMed = medDays / people;

        function capScore(days) {
          if (days <= 0) return 0;
          if (days >= 60) return 100;
          return (days / 60) * 100;
        }

        const foodScore = capScore(perCapFood);
        const waterScore = capScore(perCapWater);
        const medScore = capScore(perCapMed);
        const weaponsScore = weapons * 10;

        const raw =
          0.35 * foodScore +
          0.35 * waterScore +
          0.15 * medScore +
          0.15 * weaponsScore;
        return clamp(raw, 0, 100);
      }

      function describeWeakness(p, t, s, l) {
        const scores = [
          { key: "Personal skills", value: p },
          { key: "Team & group", value: t },
          { key: "Shelter & location", value: s },
          { key: "Supplies & logistics", value: l },
        ];
        scores.sort((a, b) => a.value - b.value);
        const weakest = scores[0];
        if (weakest.value > 80) {
          return {
            pillar: "None in particular",
            advice:
              "All your pillars are strong in this fictional scenario. To push even higher, focus on redundancy: backup shelters, extra water sources, and alternative escape routes.",
          };
        }
        switch (weakest.key) {
          case "Personal skills":
            return {
              pillar: "Personal skills",
              advice:
                "Your weakest area is personal capability. Improving fitness, first-aid knowledge, navigation, and self-defense will dramatically increase your odds in any survival scenario.",
            };
          case "Team & group":
            return {
              pillar: "Team & group",
              advice:
                "Your group composition or coordination is a liability. Aim for a small, trusted team with complementary skills and clear roles to avoid chaos under pressure.",
            };
          case "Shelter & location":
            return {
              pillar: "Shelter & location",
              advice:
                "Your shelter is not ideal. Look for higher ground, stronger doors, fewer entry points, and at least two escape routes. Consider relocating to a safer area if possible.",
            };
          case "Supplies & logistics":
          default:
            return {
              pillar: "Supplies & logistics",
              advice:
                "You are under-supplied. Prioritize water first, then food and medicine. Simple tools and reliable weapons are more valuable than exotic gear you cannot maintain.",
            };
        }
      }

      function updateResults() {
        const p = calcPersonal();
        const t = calcTeam();
        const s = calcShelter();
        const l = calcSupplies();
        const outbreak = +document.getElementById("outbreak").value;

        const base = 0.3 * p + 0.2 * t + 0.25 * s + 0.25 * l;
        const penaltyFactor = 1 - 0.04 * (outbreak - 5); // harder when outbreak > 5
        let survival = base * penaltyFactor;
        survival = clamp(survival, 0, 100);
        const survivalRounded = Math.round(survival);

        document.getElementById("survivalPercent").textContent =
          survivalRounded + " %";
        document.getElementById("scorePersonal").textContent =
          Math.round(p) + " / 100";
        document.getElementById("scoreTeam").textContent =
          Math.round(t) + " / 100";
        document.getElementById("scoreShelter").textContent =
          Math.round(s) + " / 100";
        document.getElementById("scoreSupplies").textContent =
          Math.round(l) + " / 100";

        const riskBadge = document.getElementById("riskBadge");
        let riskText, riskClass;
        if (survivalRounded <= 25) {
          riskText = "Critical risk";
          riskClass = "bg-red-100 text-red-700";
        } else if (survivalRounded <= 50) {
          riskText = "High risk";
          riskClass = "bg-orange-100 text-orange-700";
        } else if (survivalRounded <= 75) {
          riskText = "Moderate risk";
          riskClass = "bg-yellow-100 text-yellow-800";
        } else if (survivalRounded <= 90) {
          riskText = "Low risk";
          riskClass = "bg-green-100 text-green-700";
        } else {
          riskText = "Elite prepper";
          riskClass = "bg-emerald-100 text-emerald-700";
        }
        riskBadge.textContent = riskText;
        riskBadge.className = "result-badge " + riskClass;

        const weakness = describeWeakness(p, t, s, l);
        document.getElementById("weaknessText").textContent =
          "Weakest pillar: " + weakness.pillar + ".";
        document.getElementById("adviceText").textContent = weakness.advice;

        const adults = +document.getElementById("adults").value || 0;
        const children = +document.getElementById("children").value || 0;
        const shelterType =
          document.getElementById("shelterType").selectedOptions[0].textContent;
        const environment =
          document.getElementById("environment").selectedOptions[0].textContent;
        const foodDays = +document.getElementById("foodDays").value || 0;
        const waterDays = +document.getElementById("waterDays").value || 0;
        const medDays = +document.getElementById("medDays").value || 0;

        const scenarioText =
          `You are a group of ${adults} adult${
            adults === 1 ? "" : "s"
          } and ${children} child${children === 1 ? "" : "ren"} ` +
          `holding out in a ${shelterType.toLowerCase()} in a ${environment.toLowerCase()} area. ` +
          `You have roughly ${foodDays} days of food, ${waterDays} days of water, and ${medDays} days of medicine for your group. ` +
          `Given an outbreak intensity of ${outbreak}/10, your estimated chance of surviving the first 30 days is ${survivalRounded}%.`;

        document.getElementById("scenarioSummary").textContent = scenarioText;
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", updateResults);

      document.getElementById("resetBtn").addEventListener("click", () => {
        // Reset to defaults
        document.getElementById("fitness").value = 5;
        document.getElementById("firstAid").value = 4;
        document.getElementById("navigation").value = 5;
        document.getElementById("combat").value = 3;
        document.getElementById("adults").value = 3;
        document.getElementById("children").value = 0;
        document.getElementById("teamSkills").value = 5;
        document.getElementById("teamTrust").value = 6;
        document.getElementById("shelterType").value = "house";
        document.getElementById("environment").value = "suburb";
        document.getElementById("security").value = 6;
        document.getElementById("escapeRoutes").value = 5;
        document.getElementById("waterAccess").value = 4;
        document.getElementById("foodDays").value = 14;
        document.getElementById("waterDays").value = 10;
        document.getElementById("medDays").value = 7;
        document.getElementById("weapons").value = 4;
        document.getElementById("outbreak").value = 6;

        [
          "fitness",
          "firstAid",
          "navigation",
          "combat",
          "teamSkills",
          "teamTrust",
          "security",
          "escapeRoutes",
          "waterAccess",
          "weapons",
          "outbreak",
        ].forEach((id) => {
          const slider = document.getElementById(id);
          const label = document.getElementById(id + "-value");
          if (slider && label) label.textContent = slider.value;
        });

        document.getElementById("survivalPercent").textContent = "– %";
        document.getElementById("scorePersonal").textContent = "– / 100";
        document.getElementById("scoreTeam").textContent = "– / 100";
        document.getElementById("scoreShelter").textContent = "– / 100";
        document.getElementById("scoreSupplies").textContent = "– / 100";
        const riskBadge = document.getElementById("riskBadge");
        riskBadge.textContent = "Awaiting input";
        riskBadge.className = "result-badge bg-gray-100 text-gray-700";
        document.getElementById("weaknessText").textContent =
          "Fill in the form and click “Calculate” to see your weakest survival pillar.";
        document.getElementById("adviceText").textContent = "";
        document.getElementById("scenarioSummary").textContent =
          "No scenario calculated yet. Enter your details above to generate a summary of your zombie apocalypse situation.";
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden") ? "true" : "false";
          menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", expanded);
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
