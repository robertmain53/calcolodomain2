    <script>
      // Utility: convert between C and F
      function toCelsius(value, unit) {
        return unit === "F" ? ((value - 32) * 5) / 9 : value;
      }
      function toFahrenheit(value, unit) {
        return unit === "C" ? (value * 9) / 5 + 32 : value;
      }

      // Water density approximation (g/mL) as function of temperature in °C
      function waterDensityC(Tc) {
        // Polynomial fit around 0–40°C
        return (
          1.00130346 -
          0.000134722124 * Tc -
          0.00000204052596 * Tc * Tc -
          0.00000000232820948 * Tc * Tc * Tc
        );
      }

      function accurateCorrection(sgObs, tSampleC, tCalibC) {
        const rhoSample = waterDensityC(tSampleC);
        const rhoCalib = waterDensityC(tCalibC);
        return sgObs * (rhoSample / rhoCalib);
      }

      // Simple linear approximation tuned to match accurate curve near 20°C
      function simpleCorrection(sgObs, tSampleC, tCalibC) {
        const deltaT = tSampleC - tCalibC;
        // Approx 0.00026 SG per 5°C around 20°C
        const kPerC = 0.00026 / 5;
        const deltaSG = kPerC * deltaT;
        return sgObs + deltaSG;
      }

      function formatSG(value) {
        if (!isFinite(value)) return "—";
        return value.toFixed(3);
      }

      function describeDelta(delta) {
        const sign = delta >= 0 ? "+" : "−";
        const mag = Math.abs(delta);
        if (!isFinite(mag) || mag < 0.00005)
          return "0.000 SG (no significant correction)";
        const direction =
          delta >= 0
            ? "sample warmer than calibration"
            : "sample colder than calibration";
        return sign + mag.toFixed(3) + " SG (" + direction + ")";
      }

      function updateResults() {
        const unit = document.getElementById("unit-select").value;
        const sgObs = parseFloat(document.getElementById("observed-sg").value);
        const tSample = parseFloat(
          document.getElementById("sample-temp").value
        );
        const tCalib = parseFloat(
          document.getElementById("calibration-temp").value
        );
        const modeAccurate = document.getElementById("mode-toggle").checked;

        if (!isFinite(sgObs) || !isFinite(tSample) || !isFinite(tCalib)) return;

        const tSampleC = toCelsius(tSample, unit);
        const tCalibC = toCelsius(tCalib, unit);

        let sgCorr;
        if (modeAccurate) {
          sgCorr = accurateCorrection(sgObs, tSampleC, tCalibC);
        } else {
          sgCorr = simpleCorrection(sgObs, tSampleC, tCalibC);
        }
        const delta = sgCorr - sgObs;

        document.getElementById("corrected-sg").textContent = formatSG(sgCorr);
        document.getElementById("delta-sg").textContent = describeDelta(delta);
        document.getElementById("mode-label").textContent = modeAccurate
          ? "Mode: Accurate polynomial correction based on water density."
          : "Mode: Simple linear approximation for quick estimates.";
      }

      function populateQuickTable() {
        const tbody = document.getElementById("quick-table-body");
        if (!tbody) return;
        tbody.innerHTML = "";
        const calibC = 20;
        const tempsC = [10, 15, 20, 25, 30, 35, 40];
        const sgExample = 1.05;

        tempsC.forEach((Tc) => {
          const sgCorr = accurateCorrection(sgExample, Tc, calibC);
          const delta = sgCorr - sgExample;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1">${Tc.toFixed(1)}</td>
        <td class="px-3 py-1">${toFahrenheit(Tc, "C").toFixed(1)}</td>
        <td class="px-3 py-1">${delta >= 0 ? "+" : "−"}${Math.abs(
            delta
          ).toFixed(3)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            updateResults();
          });

        document
          .getElementById("unit-select")
          .addEventListener("change", function () {
            const oldUnit = this.value === "C" ? "F" : "C";
            const newUnit = this.value;
            const sampleInput = document.getElementById("sample-temp");
            const calibInput = document.getElementById("calibration-temp");

            const sampleVal = parseFloat(sampleInput.value);
            const calibVal = parseFloat(calibInput.value);
            if (isFinite(sampleVal))
              sampleInput.value =
                newUnit === "C"
                  ? (((sampleVal - 32) * 5) / 9).toFixed(1)
                  : ((sampleVal * 9) / 5 + 32).toFixed(1);
            if (isFinite(calibVal))
              calibInput.value =
                newUnit === "C"
                  ? (((calibVal - 32) * 5) / 9).toFixed(1)
                  : ((calibVal * 9) / 5 + 32).toFixed(1);

            updateResults();
          });

        document
          .getElementById("mode-toggle")
          .addEventListener("change", updateResults);
        ["observed-sg", "sample-temp", "calibration-temp"].forEach((id) => {
          document.getElementById(id).addEventListener("input", function () {
            // Debounce via timeout if needed; for now just update
            updateResults();
          });
        });

        populateQuickTable();
        updateResults();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
