            <script>
              document.addEventListener('DOMContentLoaded', function() {
                const geoInputs = {
                    radius: document.getElementById('input-radius'),
                    diameter: document.getElementById('input-diameter'),
                    circumference: document.getElementById('input-circumference'),
                    area: document.getElementById('input-area')
                };
                const calculateGeoBtn = document.getElementById('calculate-btn-geo');
                const resultsContainerGeo = document.getElementById('results-container-geo');
                const errorMessageGeo = document.getElementById('error-message-geo');
                const stepByStepGeo = document.getElementById('step-by-step-geo');
                
                const resultRadius = document.getElementById('result-radius');
                const resultDiameter = document.getElementById('result-diameter');
                const resultCircumference = document.getElementById('result-circumference');
                const resultArea = document.getElementById('result-area');

                // Eq Inputs
                const inputH = document.getElementById('input-h');
                const inputK = document.getElementById('input-k');
                const inputREq = document.getElementById('input-r-eq');
                const calculateEqBtn = document.getElementById('calculate-btn-eq');
                const resultsContainerEq = document.getElementById('results-container-eq');
                const resultEquationStd = document.getElementById('result-equation-std');
                const resultEquationGen = document.getElementById('result-equation-gen');


                // --- Helper Functions ---
                function parseInput(val) {
                    const num = parseFloat(val);
                    return (num > 0 && !isNaN(num)) ? num : null;
                }
                
                function formatNumber(num) {
                    if (Math.abs(num) < 1e-10) return '0';
                    return parseFloat(num.toFixed(6)).toString();
                }

                function showError(message, targetElement) {
                    targetElement.textContent = `Error: ${message}`;
                    if (targetElement === errorMessageGeo) {
                        resultsContainerGeo.classList.add('hidden');
                    }
                }
                
                // --- Geometric Calculation Logic ---
                calculateGeoBtn.addEventListener('click', () => {
                    let knownValue = null;
                    let knownType = null;
                    let count = 0;

                    // 1. Identify input type and value
                    for (const key in geoInputs) {
                        const value = parseInput(geoInputs[key].value);
                        if (value !== null) {
                            knownValue = value;
                            knownType = key;
                            count++;
                        }
                    }

                    try {
                        if (count === 0) {
                            throw new Error('Please enter a value for Radius, Diameter, Circumference, or Area.');
                        }
                        if (count > 1) {
                            throw new Error('Please enter a value for ONLY ONE property and leave the others blank.');
                        }
                        
                        errorMessageGeo.textContent = '';
                        let r, d, C, A;
                        let derivationSteps = '';

                        // 2. Derive Radius (r)
                        if (knownType === 'radius') {
                            r = knownValue;
                            derivationSteps = `<p>1. Input: Radius $r = ${formatNumber(r)}$</p>`;
                        } else if (knownType === 'diameter') {
                            r = knownValue / 2;
                            derivationSteps = `<p>1. Derive Radius from Diameter: $r = d/2 = ${formatNumber(knownValue)}/2 = ${formatNumber(r)}$</p>`;
                        } else if (knownType === 'circumference') {
                            r = knownValue / (2 * Math.PI);
                            derivationSteps = `<p>1. Derive Radius from Circumference: $r = C / (2\\pi) = ${formatNumber(knownValue)} / (2\\pi) \\approx ${formatNumber(r)}$</p>`;
                        } else if (knownType === 'area') {
                            r = Math.sqrt(knownValue / Math.PI);
                            derivationSteps = `<p>1. Derive Radius from Area: $r = \\sqrt{A / \\pi} = \\sqrt{${formatNumber(knownValue)} / \\pi} \\approx ${formatNumber(r)}$</p>`;
                        }
                        
                        // 3. Calculate remaining properties
                        d = 2 * r;
                        C = 2 * Math.PI * r;
                        A = Math.PI * r * r;
                        
                        // 4. Step-by-step for remaining properties
                        let stepCount = 2;
                        
                        if (knownType !== 'diameter') {
                            derivationSteps += `<p>${stepCount++}. <strong>Calculate Diameter $d$:</strong> $d = 2r = 2 \\times ${formatNumber(r)} = ${formatNumber(d)}$</p>`;
                        }
                        if (knownType !== 'circumference') {
                            derivationSteps += `<p>${stepCount++}. <strong>Calculate Circumference $C$:</strong> $C = 2\\pi r = 2\\pi \\times ${formatNumber(r)} \\approx ${formatNumber(C)}$</p>`;
                        }
                        if (knownType !== 'area') {
                            derivationSteps += `<p>${stepCount++}. <strong>Calculate Area $A$:</strong> $A = \\pi r^2 = \\pi \\times ${formatNumber(r)}^2 \\approx ${formatNumber(A)}$</p>`;
                        }

                        // 5. Update DOM
                        resultRadius.textContent = formatNumber(r);
                        resultDiameter.textContent = formatNumber(d);
                        resultCircumference.textContent = formatNumber(C);
                        resultArea.textContent = formatNumber(A);
                        stepByStepGeo.innerHTML = derivationSteps;
                        resultsContainerGeo.classList.remove('hidden');

                        // Re-render MathJax
                        if (window.MathJax) {
                            window.MathJax.typesetPromise([stepByStepGeo]);
                        }

                    } catch (e) {
                        showError(e.message, errorMessageGeo);
                    }
                });

                // --- Analytic Calculation Logic ---
                calculateEqBtn.addEventListener('click', () => {
                    const h = parseInput(inputH.value);
                    const k = parseInput(inputK.value);
                    const r = parseInput(inputREq.value);

                    try {
                        if (h === null || k === null || r === null) {
                            throw new Error('Please enter numerical values for the Center (h, k) and Radius (r).');
                        }
                        
                        // 1. Standard Form
                        const r_sq = r * r;
                        const h_sign = h > 0 ? '-' : '+';
                        const k_sign = k > 0 ? '-' : '+';
                        
                        // Format h and k for the equation, handling negative signs correctly
                        const h_abs = Math.abs(h) === 0 ? '0' : formatNumber(Math.abs(h));
                        const k_abs = Math.abs(k) === 0 ? '0' : formatNumber(Math.abs(k));

                        const std_eq_h = (Math.abs(h) < 1e-10) ? 'x' : `(x ${h_sign} ${h_abs})`;
                        const std_eq_k = (Math.abs(k) < 1e-10) ? 'y' : `(y ${k_sign} ${k_abs})`;

                        const standardEquation = `$${std_eq_h}^2 + ${std_eq_k}^2 = ${formatNumber(r_sq)}$$`;
                        
                        // 2. General Form (x^2 + y^2 + Dx + Ey + F = 0)
                        const D = -2 * h;
                        const E = -2 * k;
                        const F = h * h + k * k - r_sq;
                        
                        const D_term = D !== 0 ? `${D > 0 ? '+' : '-'} ${formatNumber(Math.abs(D))}x` : '';
                        const E_term = E !== 0 ? `${E > 0 ? '+' : '-'} ${formatNumber(Math.abs(E))}y` : '';
                        const F_term = F !== 0 ? `${F > 0 ? '+' : '-'} ${formatNumber(Math.abs(F))}` : '';
                        
                        const generalEquation = `x^2 + y^2 ${D_term} ${E_term} ${F_term} = 0`;

                        // 3. Update DOM
                        resultEquationStd.innerHTML = standardEquation;
                        resultEquationGen.textContent = generalEquation;
                        resultsContainerEq.classList.remove('hidden');

                        // Re-render MathJax
                        if (window.MathJax) {
                            window.MathJax.typesetPromise([resultEquationStd, resultEquationGen]);
                        }

                    } catch (e) {
                        showError(e.message, document.getElementById('error-message-geo')); // Use geo error message area for simplicity
                    }
                });

                // Initial geometric calculation (for example values)
                geoInputs.radius.value = 5;
                calculateGeoBtn.click();
                
                // Initial equation calculation
                calculateEqBtn.click();
              });
            </script>

