<script>
        function convertSize() {
            // Assume conversion factors for demonstration purposes
            const conversionFactors = {
                us: { uk: 1, eu: 2.54, aus: 1.5 },
                uk: { us: 1, eu: 2.54, aus: 1.5 },
                eu: { us: 1, uk: 1, aus: 1.5 },
                aus: { us: 1, uk: 1, eu: 2.54 }
            };

            const inputSize = document.getElementById('input-size').value;
            const inputValue = parseFloat(document.getElementById('input-value').value);

            if (!inputValue || inputValue <= 0) {
                alert('Please enter a valid size.');
                return;
            }

            const results = {
                us: (inputValue * conversionFactors[inputSize].us).toFixed(2),
                uk: (inputValue * conversionFactors[inputSize].uk).toFixed(2),
                eu: (inputValue * conversionFactors[inputSize].eu).toFixed(2),
                aus: (inputValue * conversionFactors[inputSize].aus).toFixed(2)
            };

            document.getElementById('result-us').textContent = results.us;
            document.getElementById('result-uk').textContent = results.uk;
            document.getElementById('result-eu').textContent = results.eu;
            document.getElementById('result-aus').textContent = results.aus;
        }
    </script>


