    <script>
      // Light's criteria calculator logic
      function toGPerDl(value, unit) {
        if (!isFinite(value)) return NaN;
        if (unit === "g_dL") return value;
        if (unit === "g_L") return value / 10; // 1 g/dL = 10 g/L
        return value;
      }

      function getNumber(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isFinite(v) ? v : NaN;
      }

      function setBadge(el, positive, available) {
        if (!available) {
          el.textContent = "N/A";
          el.className = "badge bg-gray-100 text-gray-500";
          return;
        }
        if (positive) {
          el.textContent = "Positive";
          el.className = "badge bg-red-100 text-red-700";
        } else {
          el.textContent = "Negative";
          el.className = "badge bg-green-100 text-green-700";
        }
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", function () {
          const pleuralProteinRaw = getNumber("pleural-protein");
          const pleuralProteinUnit = document.getElementById(
            "pleural-protein-unit"
          ).value;
          const serumProteinRaw = getNumber("serum-protein");
          const serumProteinUnit =
            document.getElementById("serum-protein-unit").value;

          const pleuralProtein = toGPerDl(
            pleuralProteinRaw,
            pleuralProteinUnit
          );
          const serumProtein = toGPerDl(serumProteinRaw, serumProteinUnit);

          const pleuralLDH = getNumber("pleural-ldh");
          const serumLDH = getNumber("serum-ldh");
          const serumLDHULN = getNumber("serum-ldh-uln");

          const resultsSection = document.getElementById("results-section");
          const overallResult = document.getElementById("overall-result");
          const proteinRatioSpan = document.getElementById("protein-ratio");
          const ldhRatioSpan = document.getElementById("ldh-ratio");
          const ldhAbsSpan = document.getElementById("ldh-abs");
          const proteinBadge = document.getElementById(
            "protein-criterion-badge"
          );
          const ldhRatioBadge = document.getElementById(
            "ldh-ratio-criterion-badge"
          );
          const ldhAbsBadge = document.getElementById(
            "ldh-abs-criterion-badge"
          );
          const criteriaSummary = document.getElementById("criteria-summary");
          const clinicalNote = document.getElementById("clinical-note");

          // Basic validation: need at least one usable criterion
          const hasProteinPair =
            isFinite(pleuralProtein) &&
            isFinite(serumProtein) &&
            serumProtein > 0;
          const hasLDHPair =
            isFinite(pleuralLDH) && isFinite(serumLDH) && serumLDH > 0;
          const hasLDHAbs =
            isFinite(pleuralLDH) && isFinite(serumLDHULN) && serumLDHULN > 0;

          if (!hasProteinPair && !hasLDHPair && !hasLDHAbs) {
            alert(
              "Please enter at least one complete set of values (protein pair, LDH pair, or pleural LDH + ULN serum LDH)."
            );
            return;
          }

          let proteinRatio = NaN,
            ldhRatio = NaN,
            ldhThreshold = NaN;
          let proteinPositive = false,
            ldhRatioPositive = false,
            ldhAbsPositive = false;
          let anyPositive = false;
          let evaluatedCriteria = 0;

          if (hasProteinPair) {
            proteinRatio = pleuralProtein / serumProtein;
            proteinPositive = proteinRatio > 0.5;
            anyPositive = anyPositive || proteinPositive;
            evaluatedCriteria++;
            proteinRatioSpan.textContent = proteinRatio.toFixed(2);
          } else {
            proteinRatioSpan.textContent = "N/A";
          }
          setBadge(proteinBadge, proteinPositive, hasProteinPair);

          if (hasLDHPair) {
            ldhRatio = pleuralLDH / serumLDH;
            ldhRatioPositive = ldhRatio > 0.6;
            anyPositive = anyPositive || ldhRatioPositive;
            evaluatedCriteria++;
            ldhRatioSpan.textContent = ldhRatio.toFixed(2);
          } else {
            ldhRatioSpan.textContent = "N/A";
          }
          setBadge(ldhRatioBadge, ldhRatioPositive, hasLDHPair);

          if (hasLDHAbs) {
            ldhThreshold = (2 / 3) * serumLDHULN;
            ldhAbsPositive = pleuralLDH > ldhThreshold;
            anyPositive = anyPositive || ldhAbsPositive;
            evaluatedCriteria++;
            ldhAbsSpan.textContent =
              pleuralLDH.toFixed(0) +
              " U/L (2/3 ULN ≈ " +
              ldhThreshold.toFixed(0) +
              " U/L)";
          } else if (isFinite(pleuralLDH)) {
            ldhAbsSpan.textContent = pleuralLDH.toFixed(0) + " U/L";
          } else {
            ldhAbsSpan.textContent = "N/A";
          }
          setBadge(ldhAbsBadge, ldhAbsPositive, hasLDHAbs);

          // Overall classification
          resultsSection.classList.remove("hidden");
          if (evaluatedCriteria === 0) {
            overallResult.className =
              "p-4 rounded mb-4 border border-amber-300 bg-amber-50 text-amber-800";
            overallResult.innerHTML =
              "<strong>Insufficient data.</strong> At least one Light’s criterion could not be evaluated.";
            criteriaSummary.textContent =
              "Please provide more complete protein and/or LDH data to apply Light’s criteria.";
            clinicalNote.textContent =
              "Consider repeating or completing laboratory testing. Interpretation should always be integrated with imaging and clinical context.";
            return;
          }

          if (anyPositive) {
            overallResult.className =
              "p-4 rounded mb-4 border border-red-300 bg-red-50 text-red-800";
            overallResult.innerHTML =
              "<strong>Exudative pleural effusion (by Light’s criteria).</strong>";
            criteriaSummary.textContent =
              "At least one Light’s criterion is positive, so the effusion is classified as exudative. " +
              "Common causes include pneumonia, malignancy, pulmonary embolism, tuberculosis, and inflammatory conditions.";
            clinicalNote.textContent =
              "Light’s criteria are highly sensitive for exudates but may misclassify some transudates, especially in patients on diuretics. " +
              "Correlate with history, imaging, and additional pleural fluid tests (pH, glucose, cytology, microbiology).";
          } else {
            overallResult.className =
              "p-4 rounded mb-4 border border-green-300 bg-green-50 text-green-800";
            overallResult.innerHTML =
              "<strong>Transudative pleural effusion (by Light’s criteria).</strong>";
            criteriaSummary.textContent =
              "All evaluated Light’s criteria are negative, suggesting a transudative effusion. " +
              "Typical causes include heart failure, cirrhosis, nephrotic syndrome, and other systemic conditions.";
            clinicalNote.textContent =
              "In patients on diuretics or with borderline values, consider additional gradients such as serum–pleural albumin or protein gradients. " +
              "Always interpret in conjunction with the clinical picture.";
          }
        });

      document
        .getElementById("reset-btn")
        .addEventListener("click", function () {
          [
            "pleural-protein",
            "serum-protein",
            "pleural-ldh",
            "serum-ldh",
            "serum-ldh-uln",
          ].forEach(function (id) {
            document.getElementById(id).value = "";
          });
          document.getElementById("results-section").classList.add("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
