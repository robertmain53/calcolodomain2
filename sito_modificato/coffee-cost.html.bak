    <script>
      (function () {
        const currencyInput = document.getElementById("currency");
        const pricePrefixIds = [
          "beans-bag-price-prefix",
          "pods-box-price-prefix",
          "instant-jar-price-prefix",
          "cafe-price-prefix",
          "equip-total-prefix",
          "compare-cafe-price-prefix",
        ];

        function getCurrencySymbol() {
          const val = currencyInput.value.trim();
          return val || "$";
        }

        function updateCurrencyPrefixes() {
          const symbol = getCurrencySymbol();
          pricePrefixIds.forEach((id) => {
            const el = document.getElementById(id);
            if (el) el.textContent = symbol;
          });
        }

        currencyInput.addEventListener("input", updateCurrencyPrefixes);
        updateCurrencyPrefixes();

        // Tab handling
        const tabs = document.querySelectorAll(".coffee-tab");
        const panels = document.querySelectorAll(".coffee-tab-panel");

        tabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            const target = tab.getAttribute("data-tab");
            tabs.forEach((t) => {
              t.classList.remove("border-blue-600", "text-blue-600");
              t.classList.add("border-transparent", "text-gray-500");
            });
            tab.classList.add("border-blue-600", "text-blue-600");
            tab.classList.remove("text-gray-500", "border-transparent");

            panels.forEach((panel) => {
              panel.classList.toggle("hidden", panel.id !== "tab-" + target);
            });
          });
        });

        // Unit conversion helpers
        function toGrams(value, unit) {
          const v = Number(value);
          if (!isFinite(v) || v <= 0) return NaN;
          switch (unit) {
            case "g":
              return v;
            case "kg":
              return v * 1000;
            case "oz":
              return v * 28.349523125;
            case "lb":
              return v * 453.59237;
            default:
              return NaN;
          }
        }

        function safeNumber(id) {
          const el = document.getElementById(id);
          if (!el) return NaN;
          const v = Number(el.value);
          return isFinite(v) ? v : NaN;
        }

        function formatMoney(value) {
          if (!isFinite(value)) return "–";
          const symbol = getCurrencySymbol();
          const abs = Math.abs(value);
          const decimals = abs >= 100 ? 0 : abs >= 10 ? 2 : 3;
          return symbol + value.toFixed(decimals);
        }

        function formatNumber(value, decimals = 1) {
          if (!isFinite(value)) return "–";
          return value.toFixed(decimals);
        }

        function calculate() {
          const activeTab = Array.from(tabs).find((t) =>
            t.classList.contains("text-blue-600")
          );
          const mode = activeTab ? activeTab.getAttribute("data-tab") : "beans";

          let costPerCupCoffee = NaN;
          let cupsPerUnit = NaN;
          let unitPrice = NaN;
          let cupsPerDay = NaN;

          if (mode === "beans") {
            const bagPrice = safeNumber("beans-bag-price");
            const bagWeight = safeNumber("beans-bag-weight");
            const bagUnit = document.getElementById("beans-bag-unit").value;
            const dose = safeNumber("beans-dose");
            cupsPerDay = safeNumber("beans-cups-per-day");

            const grams = toGrams(bagWeight, bagUnit);
            if (grams > 0 && dose > 0) {
              cupsPerUnit = grams / dose;
            }
            unitPrice = bagPrice;
            if (cupsPerUnit > 0) {
              costPerCupCoffee = bagPrice / cupsPerUnit;
            }
          } else if (mode === "pods") {
            const boxPrice = safeNumber("pods-box-price");
            const podsCount = safeNumber("pods-count");
            cupsPerDay = safeNumber("pods-cups-per-day");

            cupsPerUnit = podsCount;
            unitPrice = boxPrice;
            if (podsCount > 0) {
              costPerCupCoffee = boxPrice / podsCount;
            }
          } else if (mode === "instant") {
            const jarPrice = safeNumber("instant-jar-price");
            const jarWeight = safeNumber("instant-jar-weight");
            const jarUnit = document.getElementById("instant-jar-unit").value;
            const dose = safeNumber("instant-dose");
            cupsPerDay = safeNumber("instant-cups-per-day");

            const grams = toGrams(jarWeight, jarUnit);
            if (grams > 0 && dose > 0) {
              cupsPerUnit = grams / dose;
            }
            unitPrice = jarPrice;
            if (cupsPerUnit > 0) {
              costPerCupCoffee = jarPrice / cupsPerUnit;
            }
          } else if (mode === "cafe") {
            const cafePrice = safeNumber("cafe-price");
            cupsPerDay = safeNumber("cafe-cups-per-day");

            costPerCupCoffee = cafePrice;
            cupsPerUnit = 1;
            unitPrice = cafePrice;
          }

          // Equipment cost per cup (only for home modes)
          let equipCostPerCup = 0;
          if (mode !== "cafe") {
            const equipTotal = safeNumber("equip-total");
            const equipYears = safeNumber("equip-years");
            const equipDaysPerWeek = safeNumber("equip-days-per-week");

            if (
              equipTotal > 0 &&
              equipYears > 0 &&
              equipDaysPerWeek > 0 &&
              cupsPerDay > 0
            ) {
              const monthsOfUse = equipYears * 12;
              const equipPerMonth = equipTotal / monthsOfUse;
              const weeklyCups = cupsPerDay * equipDaysPerWeek;
              const monthlyCups = weeklyCups * (52 / 12);
              if (monthlyCups > 0) {
                equipCostPerCup = equipPerMonth / monthlyCups;
              }
            }
          }

          const totalCostPerCup = costPerCupCoffee + equipCostPerCup;

          // Volume and cost per period
          const dailyCups = cupsPerDay > 0 ? cupsPerDay : NaN;
          const monthlyCups = isFinite(dailyCups) ? dailyCups * 30.4 : NaN;
          const yearlyCups = isFinite(dailyCups) ? dailyCups * 365 : NaN;

          const monthlyCost =
            isFinite(totalCostPerCup) && isFinite(monthlyCups)
              ? totalCostPerCup * monthlyCups
              : NaN;
          const yearlyCost =
            isFinite(totalCostPerCup) && isFinite(yearlyCups)
              ? totalCostPerCup * yearlyCups
              : NaN;

          const unitsPerMonth =
            isFinite(monthlyCups) && cupsPerUnit > 0
              ? monthlyCups / cupsPerUnit
              : NaN;

          // Update UI
          document.getElementById("result-cost-per-cup").textContent =
            formatMoney(totalCostPerCup);
          const noteEl = document.getElementById("result-cost-per-cup-note");
          if (equipCostPerCup > 0 && isFinite(costPerCupCoffee)) {
            noteEl.textContent = `Includes ${formatMoney(
              costPerCupCoffee
            )} coffee + ${formatMoney(equipCostPerCup)} equipment per cup.`;
          } else if (isFinite(costPerCupCoffee)) {
            noteEl.textContent = "Coffee only (no equipment cost included).";
          } else {
            noteEl.textContent = "";
          }

          document.getElementById("result-monthly").textContent = isFinite(
            monthlyCost
          )
            ? `Approx. monthly cost: ${formatMoney(monthlyCost)}`
            : "Approx. monthly cost: –";
          document.getElementById("result-yearly").textContent = isFinite(
            yearlyCost
          )
            ? `Approx. yearly cost: ${formatMoney(yearlyCost)}`
            : "Approx. yearly cost: –";

          const volNote = document.getElementById("result-volume-note");
          if (isFinite(dailyCups)) {
            volNote.textContent = `Assuming ${formatNumber(
              dailyCups,
              2
            )} cups per day (~${formatNumber(
              monthlyCups,
              0
            )} per month, ${formatNumber(yearlyCups, 0)} per year).`;
          } else {
            volNote.textContent = "";
          }

          document.getElementById("result-cups-per-unit").textContent =
            isFinite(cupsPerUnit)
              ? formatNumber(cupsPerUnit, 1) + " cups"
              : "–";
          document.getElementById("result-unit-price").textContent =
            formatMoney(unitPrice);
          document.getElementById("result-units-per-month").textContent =
            isFinite(unitsPerMonth) ? formatNumber(unitsPerMonth, 2) : "–";

          // Reset comparison output hint
          const compareOutput = document.getElementById("compare-output");
          compareOutput.innerHTML =
            '<p>Home vs café comparison updated. Click "Compare home vs café" to see details.</p>';

          // Store last total cost per cup for comparison
          compareOutput.dataset.homeCostPerCup = isFinite(totalCostPerCup)
            ? String(totalCostPerCup)
            : "";
          compareOutput.dataset.cupsPerYear = isFinite(yearlyCups)
            ? String(yearlyCups)
            : "";
        }

        document
          .getElementById("coffee-calc-btn")
          .addEventListener("click", calculate);

        document
          .getElementById("coffee-reset-btn")
          .addEventListener("click", () => {
            currencyInput.value = "$";
            updateCurrencyPrefixes();

            // Reset beans
            document.getElementById("beans-bag-price").value = 12;
            document.getElementById("beans-bag-weight").value = 340;
            document.getElementById("beans-bag-unit").value = "g";
            document.getElementById("beans-dose").value = 17;
            document.getElementById("beans-cups-per-day").value = 2;

            // Reset pods
            document.getElementById("pods-box-price").value = 18;
            document.getElementById("pods-count").value = 40;
            document.getElementById("pods-cups-per-day").value = 2;

            // Reset instant
            document.getElementById("instant-jar-price").value = 8;
            document.getElementById("instant-jar-weight").value = 200;
            document.getElementById("instant-jar-unit").value = "g";
            document.getElementById("instant-dose").value = 2;
            document.getElementById("instant-cups-per-day").value = 2;

            // Reset café
            document.getElementById("cafe-price").value = 4.5;
            document.getElementById("cafe-cups-per-day").value = 1;

            // Reset equipment
            document.getElementById("equip-total").value = 300;
            document.getElementById("equip-years").value = 5;
            document.getElementById("equip-days-per-week").value = 7;

            // Reset compare
            document.getElementById("compare-cafe-price").value = 4.5;
            document.getElementById("compare-output").innerHTML =
              "<p>Home vs café comparison will appear here after you calculate.</p>";

            calculate();
          });

        document.getElementById("compare-btn").addEventListener("click", () => {
          const compareOutput = document.getElementById("compare-output");
          const homeCostPerCup = Number(compareOutput.dataset.homeCostPerCup);
          const cupsPerYear = Number(compareOutput.dataset.cupsPerYear);
          const cafePrice = safeNumber("compare-cafe-price");

          if (
            !isFinite(homeCostPerCup) ||
            homeCostPerCup <= 0 ||
            !isFinite(cupsPerYear) ||
            cupsPerYear <= 0 ||
            !isFinite(cafePrice) ||
            cafePrice <= 0
          ) {
            compareOutput.innerHTML =
              '<p class="text-red-600">Please calculate your home coffee cost first and enter a valid café price.</p>';
            return;
          }

          const deltaPerCup = cafePrice - homeCostPerCup;
          const yearlySavings = deltaPerCup * cupsPerYear;
          const symbol = getCurrencySymbol();

          let html = "";
          html += `<p>Home coffee costs about <strong>${formatMoney(
            homeCostPerCup
          )}</strong> per cup.</p>`;
          html += `<p>Café drinks cost about <strong>${formatMoney(
            cafePrice
          )}</strong> per cup.</p>`;

          if (deltaPerCup > 0) {
            html += `<p class="mt-1">You save about <strong>${formatMoney(
              deltaPerCup
            )}</strong> every time you drink coffee at home instead of at a café.</p>`;
            html += `<p class="mt-1">At your current consumption, that’s roughly <strong>${formatMoney(
              yearlySavings
            )}</strong> saved per year.</p>`;
          } else if (deltaPerCup < 0) {
            html += `<p class="mt-1">Your home setup is actually <strong>${formatMoney(
              Math.abs(deltaPerCup)
            )}</strong> more expensive per cup than the café price you entered.</p>`;
            html += `<p class="mt-1">Over a year, that’s about <strong>${formatMoney(
              Math.abs(yearlySavings)
            )}</strong> more than buying from the café.</p>`;
          } else {
            html += `<p class="mt-1">Your home and café coffee currently cost about the same per cup.</p>`;
          }

          compareOutput.innerHTML = html;
        });

        // Initial calculation
        calculate();
      })();
    </script>
  
