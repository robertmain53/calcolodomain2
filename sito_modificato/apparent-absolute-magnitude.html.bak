    <script>
      // Apparent & absolute magnitude calculator logic
      (function () {
        const modes = {
          "m-from-Md": {
            name: "Apparent m from M & distance",
            description:
              "Compute apparent magnitude from absolute magnitude and distance.",
            inputs: ["M", "d"],
            output: "m",
          },
          "M-from-md": {
            name: "Absolute M from m & distance",
            description:
              "Compute absolute magnitude from apparent magnitude and distance.",
            inputs: ["m", "d"],
            output: "M",
          },
          "d-from-mM": {
            name: "Distance from m & M",
            description:
              "Compute distance from apparent and absolute magnitude.",
            inputs: ["m", "M"],
            output: "d",
          },
          "L-from-M": {
            name: "Luminosity from M",
            description:
              "Compute luminosity relative to the Sun from absolute magnitude.",
            inputs: ["M"],
            output: "L",
          },
        };

        const modeButtons = document.querySelectorAll(".mode-btn");
        const form = document.getElementById("mag-form");
        const resultsBox = document.getElementById("results");
        const resultsContent = document.getElementById("results-content");

        const fieldM = document.getElementById("field-m");
        const fieldAbsM = document.getElementById("field-M");
        const fieldD = document.getElementById("field-d");
        const fieldL = document.getElementById("field-L");
        const fieldMsun = document.getElementById("field-Msun");

        const inputM = document.getElementById("m");
        const inputAbsM = document.getElementById("M");
        const inputD = document.getElementById("d");
        const inputL = document.getElementById("L");
        const inputMsun = document.getElementById("Msun");

        const computeBtn = document.getElementById("compute-btn");
        const resetBtn = document.getElementById("reset-btn");

        let currentMode = "m-from-Md";

        function setMode(modeKey) {
          currentMode = modeKey;
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === modeKey) {
              btn.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              btn.classList.add(
                "border-blue-500",
                "text-blue-600",
                "bg-blue-50"
              );
            } else {
              btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
              btn.classList.remove(
                "border-blue-500",
                "text-blue-600",
                "bg-blue-50"
              );
            }
          });

          // Show/hide fields based on mode
          fieldM.classList.remove("hidden");
          fieldAbsM.classList.remove("hidden");
          fieldD.classList.remove("hidden");
          fieldL.classList.add("hidden");
          fieldMsun.classList.remove("hidden");

          if (modeKey === "m-from-Md") {
            inputM.value = "";
          } else if (modeKey === "M-from-md") {
            inputAbsM.value = "";
          } else if (modeKey === "d-from-mM") {
            // distance is output
            inputD.value = "";
          } else if (modeKey === "L-from-M") {
            fieldD.classList.add("hidden");
            fieldM.classList.add("hidden");
            fieldL.classList.remove("hidden");
            inputL.value = "";
          }

          resultsBox.classList.add("hidden");
          resultsContent.innerHTML = "";
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => setMode(btn.dataset.mode));
        });

        function getDistanceInParsecs() {
          const dVal = parseFloat(inputD.value);
          if (!isFinite(dVal) || dVal <= 0) return NaN;
          const unit = form.querySelector('input[name="dUnit"]:checked').value;
          if (unit === "pc") return dVal;
          return dVal / 3.26156; // ly -> pc
        }

        function formatNumber(x, digits = 3) {
          if (!isFinite(x)) return "—";
          if (Math.abs(x) >= 1e4 || (Math.abs(x) <= 1e-3 && x !== 0)) {
            return x.toExponential(digits);
          }
          return x.toFixed(digits);
        }

        function compute() {
          const mode = modes[currentMode];
          let m = parseFloat(inputM.value);
          let M = parseFloat(inputAbsM.value);
          let d = parseFloat(inputD.value);
          let L = parseFloat(inputL.value);
          const Msun = parseFloat(inputMsun.value);

          resultsContent.innerHTML = "";
          resultsBox.classList.add("hidden");

          try {
            if (currentMode === "m-from-Md") {
              const dPc = getDistanceInParsecs();
              if (!isFinite(M) || !isFinite(dPc))
                throw new Error(
                  "Please enter absolute magnitude and a positive distance."
                );
              const logd = Math.log10(dPc);
              const mCalc = M + 5 * logd - 5;
              inputM.value = mCalc.toFixed(3);

              const dLy = dPc * 3.26156;
              const lines = [];
              lines.push(
                `<p>Computed apparent magnitude: <strong>m = ${mCalc.toFixed(
                  3
                )}</strong></p>`
              );
              lines.push(
                `<p>Distance: ${formatNumber(dPc)} pc (${formatNumber(
                  dLy
                )} ly)</p>`
              );
              if (isFinite(Msun)) {
                const Lrel = Math.pow(10, (Msun - M) / 2.5);
                lines.push(
                  `<p>Intrinsic luminosity (relative to Sun): <strong>L/L☉ ≈ ${formatNumber(
                    Lrel
                  )}</strong></p>`
                );
              }
              resultsContent.innerHTML = lines.join("");
            } else if (currentMode === "M-from-md") {
              const dPc = getDistanceInParsecs();
              if (!isFinite(m) || !isFinite(dPc))
                throw new Error(
                  "Please enter apparent magnitude and a positive distance."
                );
              const logd = Math.log10(dPc);
              const MCalc = m - 5 * logd + 5;
              inputAbsM.value = MCalc.toFixed(3);

              const dLy = dPc * 3.26156;
              const lines = [];
              lines.push(
                `<p>Computed absolute magnitude: <strong>M = ${MCalc.toFixed(
                  3
                )}</strong></p>`
              );
              lines.push(
                `<p>Distance: ${formatNumber(dPc)} pc (${formatNumber(
                  dLy
                )} ly)</p>`
              );
              if (isFinite(Msun)) {
                const Lrel = Math.pow(10, (Msun - MCalc) / 2.5);
                lines.push(
                  `<p>Intrinsic luminosity (relative to Sun): <strong>L/L☉ ≈ ${formatNumber(
                    Lrel
                  )}</strong></p>`
                );
              }
              resultsContent.innerHTML = lines.join("");
            } else if (currentMode === "d-from-mM") {
              if (!isFinite(m) || !isFinite(M))
                throw new Error(
                  "Please enter both apparent and absolute magnitude."
                );
              const exponent = (m - M + 5) / 5;
              const dPc = Math.pow(10, exponent);
              const dLy = dPc * 3.26156;
              inputD.value = dPc.toFixed(3);
              // force unit to parsecs for clarity
              const pcRadio = form.querySelector(
                'input[name="dUnit"][value="pc"]'
              );
              if (pcRadio) pcRadio.checked = true;

              const lines = [];
              lines.push(
                `<p>Computed distance: <strong>d ≈ ${formatNumber(
                  dPc
                )} pc</strong> (${formatNumber(dLy)} ly)</p>`
              );
              lines.push(
                `<p>Distance modulus: m − M = ${(m - M).toFixed(3)}</p>`
              );
              if (isFinite(Msun)) {
                const Lrel = Math.pow(10, (Msun - M) / 2.5);
                lines.push(
                  `<p>Intrinsic luminosity (relative to Sun): <strong>L/L☉ ≈ ${formatNumber(
                    Lrel
                  )}</strong></p>`
                );
              }
              resultsContent.innerHTML = lines.join("");
            } else if (currentMode === "L-from-M") {
              if (!isFinite(M))
                throw new Error("Please enter absolute magnitude.");
              if (!isFinite(Msun))
                throw new Error("Please enter solar absolute magnitude M☉.");
              const Lrel = Math.pow(10, (Msun - M) / 2.5);
              inputL.value = Lrel.toFixed(4);

              const lines = [];
              lines.push(
                `<p>Luminosity relative to the Sun: <strong>L/L☉ ≈ ${formatNumber(
                  Lrel
                )}</strong></p>`
              );
              lines.push(
                `<p>Using relation: L/L☉ = 10^((M☉ − M)/2.5) with M☉ = ${Msun.toFixed(
                  2
                )}</p>`
              );
              resultsContent.innerHTML = lines.join("");
            }

            resultsBox.classList.remove("hidden");
          } catch (err) {
            resultsContent.innerHTML = `<p class="text-red-600 text-sm">${err.message}</p>`;
            resultsBox.classList.remove("hidden");
          }
        }

        computeBtn.addEventListener("click", compute);

        resetBtn.addEventListener("click", () => {
          inputM.value = "";
          inputAbsM.value = "";
          inputD.value = "";
          inputL.value = "";
          inputMsun.value = "4.83";
          const pcRadio = form.querySelector('input[name="dUnit"][value="pc"]');
          if (pcRadio) pcRadio.checked = true;
          resultsContent.innerHTML = "";
          resultsBox.classList.add("hidden");
        });

        // Allow Enter key to trigger compute
        form.addEventListener("submit", (e) => {
          e.preventDefault();
          compute();
        });

        // Initialize default mode
        setMode(currentMode);
      })();
    </script>

