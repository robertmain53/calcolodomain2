    <script>
      // Mode toggle
      const modeSelect = document.getElementById("mode-select");
      const valuesMode = document.getElementById("values-mode");
      const weightsMode = document.getElementById("weights-mode");

      modeSelect.addEventListener("change", () => {
        if (modeSelect.value === "values") {
          valuesMode.classList.remove("hidden");
          weightsMode.classList.add("hidden");
        } else {
          valuesMode.classList.add("hidden");
          weightsMode.classList.remove("hidden");
        }
      });

      // Sync helpers for decimal/percent pairs
      function bindDecimalPercent(decimalId, percentId) {
        const dec = document.getElementById(decimalId);
        const pct = document.getElementById(percentId);

        let lock = false;

        dec.addEventListener("input", () => {
          if (lock) return;
          lock = true;
          const v = parseFloat(dec.value);
          pct.value = isFinite(v)
            ? (v * 100).toFixed(4).replace(/0+$/, "").replace(/\.$/, "")
            : "";
          lock = false;
        });

        pct.addEventListener("input", () => {
          if (lock) return;
          lock = true;
          const v = parseFloat(pct.value);
          dec.value = isFinite(v)
            ? (v / 100).toFixed(6).replace(/0+$/, "").replace(/\.$/, "")
            : "";
          lock = false;
        });
      }

      bindDecimalPercent("equity-weight", "equity-weight-percent");
      bindDecimalPercent("debt-weight", "debt-weight-percent");
      bindDecimalPercent("cost-of-equity", "cost-of-equity-percent");
      bindDecimalPercent("cost-of-debt", "cost-of-debt-percent");
      bindDecimalPercent("tax-rate", "tax-rate-percent");

      // Calculator logic
      const errorEl = document.getElementById("error-message");
      const waccResultEl = document.getElementById("wacc-result");
      const waccResultDecEl = document.getElementById("wacc-result-decimal");
      const structureLineEl = document.getElementById("structure-line");
      const afterTaxDebtLineEl = document.getElementById("after-tax-debt-line");
      const formulaLineEl = document.getElementById("formula-line");

      function formatPercent(x) {
        if (!isFinite(x)) return "–";
        return (x * 100).toFixed(2).replace(/0+$/, "").replace(/\.$/, "") + "%";
      }

      function formatDecimal(x) {
        if (!isFinite(x)) return "–";
        return x.toFixed(6).replace(/0+$/, "").replace(/\.$/, "");
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        let EoverV, DoverV;

        if (modeSelect.value === "values") {
          const E = parseFloat(document.getElementById("equity-value").value);
          const D = parseFloat(document.getElementById("debt-value").value);

          if (!isFinite(E) || E < 0 || !isFinite(D) || D < 0) {
            errorEl.textContent =
              "Please enter non‑negative market values for equity and debt.";
            errorEl.classList.remove("hidden");
            return;
          }
          const V = E + D;
          if (V <= 0) {
            errorEl.textContent =
              "Total capital (E + D) must be greater than zero.";
            errorEl.classList.remove("hidden");
            return;
          }
          EoverV = E / V;
          DoverV = D / V;
        } else {
          const Ew = parseFloat(document.getElementById("equity-weight").value);
          const Dw = parseFloat(document.getElementById("debt-weight").value);

          if (!isFinite(Ew) || Ew < 0 || !isFinite(Dw) || Dw < 0) {
            errorEl.textContent =
              "Please enter non‑negative weights for equity and debt.";
            errorEl.classList.remove("hidden");
            return;
          }
          const sum = Ew + Dw;
          if (sum <= 0) {
            errorEl.textContent =
              "The sum of equity and debt weights must be greater than zero.";
            errorEl.classList.remove("hidden");
            return;
          }
          // Normalize if they don't sum exactly to 1
          EoverV = Ew / sum;
          DoverV = Dw / sum;
        }

        const re = parseFloat(document.getElementById("cost-of-equity").value);
        const rd = parseFloat(document.getElementById("cost-of-debt").value);
        const T = parseFloat(document.getElementById("tax-rate").value);

        if (!isFinite(re) || re < 0) {
          errorEl.textContent = "Please enter a non‑negative cost of equity.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!isFinite(rd) || rd < 0) {
          errorEl.textContent = "Please enter a non‑negative cost of debt.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!isFinite(T) || T < 0 || T >= 1) {
          errorEl.textContent =
            "Please enter a corporate tax rate between 0 and 1 (e.g. 0.25 for 25%).";
          errorEl.classList.remove("hidden");
          return;
        }

        const rdAfterTax = rd * (1 - T);
        const wacc = EoverV * re + DoverV * rdAfterTax;

        waccResultEl.textContent = formatPercent(wacc);
        waccResultDecEl.textContent = "Decimal: " + formatDecimal(wacc);

        structureLineEl.innerHTML = `E / V = ${formatDecimal(
          EoverV
        )} (${formatPercent(EoverV)}), D / V = ${formatDecimal(
          DoverV
        )} (${formatPercent(DoverV)})`;
        afterTaxDebtLineEl.innerHTML = `r<sub>d</sub>(1 − T) = ${formatDecimal(
          rdAfterTax
        )} (${formatPercent(rdAfterTax)})`;

        formulaLineEl.textContent =
          `WACC = (${formatDecimal(EoverV)}) × ${formatDecimal(re)} + ` +
          `(${formatDecimal(DoverV)}) × ${formatDecimal(
            rd
          )} × (1 − ${formatDecimal(T)})` +
          ` = ${formatDecimal(wacc)} (${formatPercent(wacc)})`;
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document
          .querySelectorAll('input[type="number"]')
          .forEach((inp) => (inp.value = ""));
        waccResultEl.textContent = "–";
        waccResultDecEl.textContent = "Decimal: –";
        structureLineEl.textContent = "E / V = –, D / V = –";
        afterTaxDebtLineEl.innerHTML = "r<sub>d</sub>(1 − T) = –";
        formulaLineEl.textContent =
          "WACC = (E/V) × r_e + (D/V) × r_d × (1 − T)";
        errorEl.classList.add("hidden");
        errorEl.textContent = "";
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
