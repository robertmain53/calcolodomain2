                <div>
                  <span class="result-label">Number of changes:</span>
                  <span id="id-count"></span>
                </div>
                <div>
                  <span class="result-label">Approximate spacing:</span>
                  <span id="id-spacing"></span> stitches between changes
                </div>
                <div>
                  <h3 class="font-semibold mt-2 mb-1 text-sm">
                    Written instruction
                  </h3>
                  <p id="id-instruction" class="text-xs text-gray-800"></p>
                </div>
              </div>
            </section>

