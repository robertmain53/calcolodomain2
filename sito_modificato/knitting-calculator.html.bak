    <script>
      // Tab handling
      const tabs = [
        { btn: "tab-gauge", panel: "panel-gauge" },
        { btn: "tab-caston", panel: "panel-caston" },
        { btn: "tab-incdec", panel: "panel-incdec" },
        { btn: "tab-yarn", panel: "panel-yarn" },
      ];
      tabs.forEach((t) => {
        document.getElementById(t.btn).addEventListener("click", () => {
          tabs.forEach((o) => {
            const b = document.getElementById(o.btn);
            const p = document.getElementById(o.panel);
            const active = o.btn === t.btn;
            b.setAttribute("aria-selected", active ? "true" : "false");
            p.classList.toggle("hidden", !active);
          });
        });
      });

      // Gauge & size
      const gaugeUnitEl = document.getElementById("gauge-unit");
      const gaugeWidthUnit = document.getElementById("gauge-width-unit");
      const gaugeHeightUnit = document.getElementById("gauge-height-unit");

      gaugeUnitEl.addEventListener("change", () => {
        const metric = gaugeUnitEl.value === "metric";
        gaugeWidthUnit.textContent = metric ? "cm" : "in";
        gaugeHeightUnit.textContent = metric ? "cm" : "in";
      });

      document.getElementById("btn-gauge").addEventListener("click", () => {
        const sts = parseFloat(document.getElementById("gauge-sts").value);
        const rows = parseFloat(document.getElementById("gauge-rows").value);
        const w = parseFloat(document.getElementById("gauge-width").value);
        const h = parseFloat(document.getElementById("gauge-height").value);
        if (!(sts > 0 && rows > 0 && w > 0 && h > 0)) {
          alert("Please enter stitches, rows, and swatch dimensions.");
          return;
        }
        const stsPerUnit = sts / w;
        const rowsPerUnit = rows / h;
        let stsPer10cm, rowsPer10cm, stsPer4in, rowsPer4in;
        if (gaugeUnitEl.value === "metric") {
          stsPer10cm = stsPerUnit * 10;
          rowsPer10cm = rowsPerUnit * 10;
          const cmPerIn = 2.54;
          stsPer4in = stsPerUnit * (4 * cmPerIn);
          rowsPer4in = rowsPerUnit * (4 * cmPerIn);
        } else {
          stsPer4in = stsPerUnit * 4;
          rowsPer4in = rowsPerUnit * 4;
          const inPerCm = 1 / 2.54;
          stsPer10cm = stsPerUnit * (10 * inPerCm);
          rowsPer10cm = rowsPerUnit * (10 * inPerCm);
        }
        document.getElementById("gauge-metric-sts").textContent =
          stsPer10cm.toFixed(1);
        document.getElementById("gauge-metric-rows").textContent =
          rowsPer10cm.toFixed(1);
        document.getElementById("gauge-imperial-sts").textContent =
          stsPer4in.toFixed(1);
        document.getElementById("gauge-imperial-rows").textContent =
          rowsPer4in.toFixed(1);
        document.getElementById("gauge-results").classList.remove("hidden");
      });

      document
        .getElementById("btn-gauge-size")
        .addEventListener("click", () => {
          const metricSts = parseFloat(
            document.getElementById("gauge-metric-sts").textContent
          );
          const metricRows = parseFloat(
            document.getElementById("gauge-metric-rows").textContent
          );
          if (!(metricSts > 0 && metricRows > 0)) {
            alert("Calculate gauge first.");
            return;
          }
          const sts = parseFloat(
            document.getElementById("gauge-width-sts").value
          );
          const rows = parseFloat(
            document.getElementById("gauge-height-rows").value
          );
          if (!(sts > 0 && rows > 0)) {
            alert("Enter stitches cast on and rows worked.");
            return;
          }
          const widthCm = (sts / metricSts) * 10;
          const heightCm = (rows / metricRows) * 10;
          const widthIn = widthCm / 2.54;
          const heightIn = heightCm / 2.54;
          document.getElementById(
            "gauge-size-result"
          ).textContent = `Approximate size: ${widthCm.toFixed(
            1
          )} cm × ${heightCm.toFixed(1)} cm (${widthIn.toFixed(
            1
          )} in × ${heightIn.toFixed(1)} in).`;
        });

      // Cast-on & rows
      document.getElementById("btn-caston").addEventListener("click", () => {
        const unit = document.getElementById("co-unit").value;
        const gaugeSts = parseFloat(
          document.getElementById("co-gauge-sts").value
        );
        const gaugeRows = parseFloat(
          document.getElementById("co-gauge-rows").value
        );
        let width = parseFloat(document.getElementById("co-width").value);
        let height = parseFloat(document.getElementById("co-height").value);
        const multipleSts = parseFloat(
          document.getElementById("co-multiple-sts").value
        );
        const multipleRows = parseFloat(
          document.getElementById("co-multiple-rows").value
        );
        const ease = parseFloat(document.getElementById("co-ease").value);

        if (!(gaugeSts > 0 && gaugeRows > 0 && width > 0 && height > 0)) {
          alert("Please enter gauge and desired width/height.");
          return;
        }
        if (!isNaN(ease)) {
          width += ease;
          if (width <= 0) {
            alert("Width plus ease must be positive.");
            return;
          }
        }
        let sts = gaugeSts * width;
        let rows = gaugeRows * height;

        let noteParts = [];
        if (!isNaN(multipleSts) && multipleSts > 0) {
          const rounded = Math.round(sts / multipleSts) * multipleSts;
          noteParts.push(
            `Stitches rounded to nearest multiple of ${multipleSts}.`
          );
          sts = rounded;
        }
        if (!isNaN(multipleRows) && multipleRows > 0) {
          const roundedR = Math.round(rows / multipleRows) * multipleRows;
          noteParts.push(
            `Rows rounded to nearest multiple of ${multipleRows}.`
          );
          rows = roundedR;
        }
        if (!isNaN(ease) && ease !== 0) {
          noteParts.unshift(
            `Includes ${ease > 0 ? "+" : ""}${ease} ${unit} ease.`
          );
        }

        document.getElementById("co-sts-result").textContent = Math.round(sts);
        document.getElementById("co-rows-result").textContent =
          Math.round(rows);
        document.getElementById("co-note").textContent = noteParts.join(" ");
        document.getElementById("co-results").classList.remove("hidden");
      });

      // Increases & decreases
      document.getElementById("btn-incdec").addEventListener("click", () => {
        const type = document.getElementById("id-type").value;
        const start = parseInt(document.getElementById("id-start").value, 10);
        const end = parseInt(document.getElementById("id-end").value, 10);
        if (!(start > 0 && end > 0)) {
          alert("Please enter starting and final stitch counts.");
          return;
        }
        let changes;
        if (type === "increase") {
          if (end <= start) {
            alert(
              "For increases, final stitch count must be greater than starting count."
            );
            return;
          }
          changes = end - start;
        } else {
          if (end >= start) {
            alert(
              "For decreases, final stitch count must be less than starting count."
            );
            return;
          }
          changes = start - end;
        }
        const spacing = start / (changes + 1);
        document.getElementById("id-count").textContent = changes;
        document.getElementById("id-spacing").textContent = spacing.toFixed(2);

        const base = Math.floor(spacing);
        const remainder = start - base * (changes + 1);
        let instruction = "";
        const action = type === "increase" ? "inc 1" : "dec 1";

        if (base <= 0) {
          instruction = `Work ${action} in approximately every ${Math.round(
            start / changes
          )} stitch across the row.`;
        } else {
          instruction = `Knit ${base}`;
          if (remainder > 0) {
            instruction += `–${base + 1}`;
          }
          instruction += `, ${action}, then *knit ${base}`;
          if (remainder > 0) {
            instruction += `–${base + 1}`;
          }
          instruction += `, ${action}; repeat from * to end of row.`;
        }

        document.getElementById("id-instruction").textContent = instruction;
        document.getElementById("id-results").classList.remove("hidden");
      });

      // Yarn usage
      document.getElementById("btn-yarn").addEventListener("click", () => {
        const swW = parseFloat(document.getElementById("swatch-width").value);
        const swH = parseFloat(document.getElementById("swatch-height").value);
        const swY = parseFloat(document.getElementById("swatch-yarn").value);
        const prW = parseFloat(document.getElementById("proj-width").value);
        const prH = parseFloat(document.getElementById("proj-height").value);
        const skeinLen = parseFloat(document.getElementById("skein-len").value);
        const lenUnit = document.getElementById("yarn-len-unit").value;

        if (
          !(swW > 0 && swH > 0 && swY > 0 && prW > 0 && prH > 0 && skeinLen > 0)
        ) {
          alert("Please fill in all swatch, project, and skein fields.");
          return;
        }
        const swArea = swW * swH;
        const prArea = prW * prH;
        const yarnPerArea = swY / swArea;
        const totalYarn = yarnPerArea * prArea;
        const skeins = totalYarn / skeinLen;

        document.getElementById(
          "yarn-total"
        ).textContent = `${totalYarn.toFixed(1)} ${lenUnit}`;
        document.getElementById("yarn-skeins").textContent = `${Math.ceil(
          skeins
        )} skeins (calculated: ${skeins.toFixed(2)})`;
        document.getElementById("yarn-results").classList.remove("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
