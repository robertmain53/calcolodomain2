                <div>
                  <label
                    class="block text-sm font-medium mb-1"
                    for="swatch-height"
                    >Swatch height</label
                  >
                  <input
                    id="swatch-height"
                    type="number"
                    min="0"
                    step="0.1"
                    class="w-full border rounded px-3 py-2 text-sm"
                    placeholder="e.g. 10"
                  />
