    <script>
      // ARM calculator logic
      function fmtMoney(v) {
        if (!isFinite(v)) return "$0";
        return "$" + v.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }
      function fmtRate(v) {
        if (!isFinite(v)) return "0%";
        return v.toFixed(3).replace(/0+$/, "").replace(/\.$/, "") + "%";
      }
      function calcPayment(balance, annualRate, months) {
        if (months <= 0) return 0;
        const i = annualRate / 100 / 12;
        if (i === 0) return balance / months;
        const pow = Math.pow(1 + i, months);
        return (balance * i * pow) / (pow - 1);
      }

      function buildArmSchedule() {
        const loanAmount = parseFloat(
          document.getElementById("loanAmount").value
        );
        const loanTermYears = parseFloat(
          document.getElementById("loanTerm").value
        );
        const fixedYears = parseFloat(
          document.getElementById("fixedPeriod").value
        );
        const initialRate = parseFloat(
          document.getElementById("initialRate").value
        );
        const indexRate = parseFloat(
          document.getElementById("indexRate").value
        );
        const margin = parseFloat(document.getElementById("margin").value);
        const adjFreq = parseFloat(
          document.getElementById("adjustmentFreq").value
        );
        const periodicCap = parseFloat(
          document.getElementById("periodicCap").value || 0
        );
        const periodicFloor = parseFloat(
          document.getElementById("periodicFloor").value || 0
        );
        const lifetimeCap = parseFloat(
          document.getElementById("lifetimeCap").value || 0
        );
        const annualTax = parseFloat(
          document.getElementById("annualTax").value || 0
        );
        const annualIns = parseFloat(
          document.getElementById("annualInsurance").value || 0
        );
        const monthlyHOA = parseFloat(
          document.getElementById("monthlyHOA").value || 0
        );
        const fixedRate = parseFloat(
          document.getElementById("fixedRate").value
        );

        const errorEl = document.getElementById("errorMsg");
        errorEl.textContent = "";

        if (
          !(
            loanAmount > 0 &&
            loanTermYears > 0 &&
            fixedYears > 0 &&
            initialRate >= 0
          )
        ) {
          errorEl.textContent =
            "Please enter at least loan amount, term, fixed period, and initial rate.";
          return null;
        }
        const totalMonths = Math.round(loanTermYears * 12);
        const fixedMonths = Math.min(Math.round(fixedYears * 12), totalMonths);
        const monthlyEscrow = annualTax / 12 + annualIns / 12 + monthlyHOA;

        let schedule = [];
        let balance = loanAmount;
        let currentRate = initialRate;
        let month = 1;
        let totalInterest = 0;
        let maxRate = currentRate;
        let maxPayment = 0;
        let maxTotalPayment = 0;

        // Initial fixed period
        let payment = calcPayment(balance, currentRate, totalMonths);
        for (; month <= fixedMonths; month++) {
          const iRate = currentRate / 100 / 12;
          const interest = balance * iRate;
          const principal = payment - interest;
          balance = Math.max(0, balance - principal);
          const piti = payment + monthlyEscrow;
          totalInterest += interest;
          if (payment > maxPayment) maxPayment = payment;
          if (piti > maxTotalPayment) maxTotalPayment = piti;
          schedule.push({
            month,
            year: Math.ceil(month / 12),
            rate: currentRate,
            payment,
            totalPayment: piti,
            principal,
            interest,
            balance,
          });
        }

        // Adjustable period
        while (month <= totalMonths && balance > 0.01) {
          // Determine new target rate = index + margin
          let targetRate = indexRate + margin;

          // Apply periodic caps relative to previous rate
          const maxUp = currentRate + periodicCap;
          const maxDown = currentRate - periodicFloor;
          if (periodicCap > 0 && targetRate > maxUp) targetRate = maxUp;
          if (periodicFloor > 0 && targetRate < maxDown) targetRate = maxDown;

          // Apply lifetime cap relative to initial rate
          const lifetimeMax = initialRate + lifetimeCap;
          if (lifetimeCap > 0 && targetRate > lifetimeMax)
            targetRate = lifetimeMax;

          currentRate = targetRate;
          if (currentRate > maxRate) maxRate = currentRate;

          const remainingMonths = totalMonths - month + 1;
          payment = calcPayment(balance, currentRate, remainingMonths);

          const segmentEnd = Math.min(totalMonths, month + adjFreq - 1);
          for (; month <= segmentEnd && balance > 0.01; month++) {
            const iRate = currentRate / 100 / 12;
            const interest = balance * iRate;
            const principal = payment - interest;
            balance = Math.max(0, balance - principal);
            const piti = payment + monthlyEscrow;
            totalInterest += interest;
            if (payment > maxPayment) maxPayment = payment;
            if (piti > maxTotalPayment) maxTotalPayment = piti;
            schedule.push({
              month,
              year: Math.ceil(month / 12),
              rate: currentRate,
              payment,
              totalPayment: piti,
              principal,
              interest,
              balance,
            });
          }
        }

        // Fixed-rate comparison
        let fixedPayment = 0;
        let fixedTotalInterest = 0;
        if (fixedRate > 0) {
          fixedPayment = calcPayment(loanAmount, fixedRate, totalMonths);
          let bal = loanAmount;
          for (let m = 1; m <= totalMonths; m++) {
            const iRate = fixedRate / 100 / 12;
            const interest = bal * iRate;
            const principal = fixedPayment - interest;
            bal = Math.max(0, bal - principal);
            fixedTotalInterest += interest;
          }
        }

        return {
          schedule,
          totalInterest,
          maxRate,
          maxPayment,
          maxTotalPayment,
          monthlyEscrow,
          fixedPayment,
          fixedTotalInterest,
        };
      }

      function renderResults() {
        const res = buildArmSchedule();
        if (!res) return;

        const {
          schedule,
          totalInterest,
          maxRate,
          maxPayment,
          maxTotalPayment,
          monthlyEscrow,
          fixedPayment,
          fixedTotalInterest,
        } = res;

        if (schedule.length === 0) return;

        const initial = schedule[0];
        document.getElementById("initialPayment").textContent = fmtMoney(
          initial.payment
        );
        document.getElementById("initialTotalPayment").textContent = fmtMoney(
          initial.payment + monthlyEscrow
        );
        document.getElementById("maxPayment").textContent =
          fmtMoney(maxPayment);
        document.getElementById("maxTotalPayment").textContent =
          fmtMoney(maxTotalPayment);
        document.getElementById("maxRate").textContent = fmtRate(maxRate);
        document.getElementById("totalInterest").textContent =
          fmtMoney(totalInterest);

        if (fixedPayment > 0) {
          document.getElementById("fixedPayment").textContent =
            fmtMoney(fixedPayment);
          document.getElementById("fixedTotalInterest").textContent =
            fmtMoney(fixedTotalInterest);
          const diff = totalInterest - fixedTotalInterest;
          const sign = diff >= 0 ? "+" : "−";
          document.getElementById("interestDiff").textContent =
            sign + fmtMoney(Math.abs(diff)).substring(1);
        } else {
          document.getElementById("fixedPayment").textContent = "$0";
          document.getElementById("fixedTotalInterest").textContent = "$0";
          document.getElementById("interestDiff").textContent = "$0";
        }

        const tbody = document.getElementById("scheduleBody");
        tbody.innerHTML = "";
        schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "border-b last:border-b-0";
          tr.innerHTML = `
        <td class="px-2 py-1">${row.month}</td>
        <td class="px-2 py-1">${row.year}</td>
        <td class="px-2 py-1">${fmtRate(row.rate)}</td>
        <td class="px-2 py-1">${fmtMoney(row.payment)}</td>
        <td class="px-2 py-1">${fmtMoney(row.totalPayment)}</td>
        <td class="px-2 py-1">${fmtMoney(row.principal)}</td>
        <td class="px-2 py-1">${fmtMoney(row.interest)}</td>
        <td class="px-2 py-1">${fmtMoney(row.balance)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", renderResults);
      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("loanAmount").value = 350000;
        document.getElementById("loanTerm").value = 30;
        document.getElementById("fixedPeriod").value = 5;
        document.getElementById("initialRate").value = 4.5;
        document.getElementById("indexRate").value = 3.0;
        document.getElementById("margin").value = 2.25;
        document.getElementById("adjustmentFreq").value = 12;
        document.getElementById("periodicCap").value = 2;
        document.getElementById("periodicFloor").value = 2;
        document.getElementById("lifetimeCap").value = 5;
        document.getElementById("annualTax").value = 4200;
        document.getElementById("annualInsurance").value = 1500;
        document.getElementById("monthlyHOA").value = 0;
        document.getElementById("fixedRate").value = 5.25;
        document.getElementById("errorMsg").textContent = "";
        document.getElementById("scheduleBody").innerHTML = "";
        document.getElementById("initialPayment").textContent = "$0";
        document.getElementById("initialTotalPayment").textContent = "$0";
        document.getElementById("maxPayment").textContent = "$0";
        document.getElementById("maxTotalPayment").textContent = "$0";
        document.getElementById("maxRate").textContent = "0%";
        document.getElementById("totalInterest").textContent = "$0";
        document.getElementById("fixedPayment").textContent = "$0";
        document.getElementById("fixedTotalInterest").textContent = "$0";
        document.getElementById("interestDiff").textContent = "$0";
      });

      // Auto-run once on load with defaults
      window.addEventListener("DOMContentLoaded", renderResults);

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
