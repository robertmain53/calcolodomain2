    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(2).replace(/\.00$/, "") + "%";
      }

      function calculateHLV() {
        const currentAge = parseFloat(
          document.getElementById("currentAge").value
        );
        const retirementAge = parseFloat(
          document.getElementById("retirementAge").value
        );
        const annualIncome = parseFloat(
          document.getElementById("annualIncome").value
        );
        const incomeGrowth =
          parseFloat(document.getElementById("incomeGrowth").value) / 100;
        const taxRate =
          parseFloat(document.getElementById("taxRate").value) / 100;
        const personalExpenseRate =
          parseFloat(document.getElementById("personalExpenseRate").value) /
          100;
        const inflationRate =
          parseFloat(document.getElementById("inflationRate").value) / 100;
        const discountRate =
          parseFloat(document.getElementById("discountRate").value) / 100;
        const existingAssets =
          parseFloat(document.getElementById("existingAssets").value) || 0;

        const errorMsg = document.getElementById("errorMsg");
        errorMsg.textContent = "";

        if (
          isNaN(currentAge) ||
          isNaN(retirementAge) ||
          retirementAge <= currentAge
        ) {
          errorMsg.textContent =
            "Please enter a valid current age and a higher retirement age.";
          return;
        }
        if (annualIncome <= 0) {
          errorMsg.textContent = "Please enter a positive annual income.";
          return;
        }
        if (
          taxRate < 0 ||
          taxRate >= 1 ||
          personalExpenseRate < 0 ||
          personalExpenseRate >= 1
        ) {
          errorMsg.textContent =
            "Tax and personal expense rates must be between 0% and 99%.";
          return;
        }
        if (discountRate <= -0.99) {
          errorMsg.textContent =
            "Please enter a reasonable expected investment return.";
          return;
        }

        const years = Math.max(0, Math.round(retirementAge - currentAge));
        const netShare = (1 - taxRate) * (1 - personalExpenseRate);
        const netIncomeToday = annualIncome * netShare;

        // Real discount rate
        const realRate = (1 + discountRate) / (1 + inflationRate) - 1;

        let hlv = 0;
        const projectionBody = document.getElementById("projectionTableBody");
        projectionBody.innerHTML = "";

        // If realRate is close to incomeGrowth, or negative, use year-by-year summation
        const useIterative =
          Math.abs(realRate - incomeGrowth) < 0.002 || realRate <= -0.001;

        if (!useIterative) {
          // Closed-form growing annuity
          const ratio = (1 + incomeGrowth) / (1 + realRate);
          const factor =
            (1 - Math.pow(ratio, years)) / (realRate - incomeGrowth);
          hlv = netIncomeToday * factor;

          // Also build a short projection table (iterative) for display
          let gross = annualIncome;
          let net = netIncomeToday;
          for (let k = 0; k < Math.min(years, 30); k++) {
            const age = currentAge + k;
            const df = Math.pow(1 + realRate, k);
            const pv = net / df;
            const row = document.createElement("tr");
            row.innerHTML = `
          <td class="px-2 py-1">${k + 1}</td>
          <td class="px-2 py-1 text-right">${age}</td>
          <td class="px-2 py-1 text-right">${formatCurrency(gross)}</td>
          <td class="px-2 py-1 text-right">${formatCurrency(net)}</td>
          <td class="px-2 py-1 text-right">${df.toFixed(3)}</td>
          <td class="px-2 py-1 text-right">${formatCurrency(pv)}</td>
        `;
            projectionBody.appendChild(row);
            gross *= 1 + incomeGrowth;
            net *= 1 + incomeGrowth;
          }
        } else {
          // Iterative year-by-year summation
          let gross = annualIncome;
          let net = netIncomeToday;
          for (let k = 0; k < years; k++) {
            const age = currentAge + k;
            const df = Math.pow(1 + realRate, k);
            const pv = net / df;
            hlv += pv;

            if (k < 30) {
              const row = document.createElement("tr");
              row.innerHTML = `
            <td class="px-2 py-1">${k + 1}</td>
            <td class="px-2 py-1 text-right">${age}</td>
            <td class="px-2 py-1 text-right">${formatCurrency(gross)}</td>
            <td class="px-2 py-1 text-right">${formatCurrency(net)}</td>
            <td class="px-2 py-1 text-right">${df.toFixed(3)}</td>
            <td class="px-2 py-1 text-right">${formatCurrency(pv)}</td>
          `;
              projectionBody.appendChild(row);
            }

            gross *= 1 + incomeGrowth;
            net *= 1 + incomeGrowth;
          }
        }

        if (!isFinite(hlv) || hlv < 0) {
          errorMsg.textContent =
            "The combination of rates you entered leads to an unstable result. Try lowering income growth or increasing the discount rate.";
          return;
        }

        const suggestedCoverage = Math.max(0, hlv - existingAssets);

        document.getElementById("hlvResult").textContent = formatCurrency(hlv);
        document.getElementById("coverageResult").textContent =
          formatCurrency(suggestedCoverage);
        document.getElementById("yearsResult").textContent = years.toString();
        document.getElementById("netIncomeResult").textContent =
          formatCurrency(netIncomeToday);
        document.getElementById("realRateResult").textContent = formatPercent(
          realRate * 100
        );

        document.getElementById("results-section").classList.remove("hidden");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateHLV);

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("hlv-form").reset();
        document.getElementById("currentAge").value = 35;
        document.getElementById("retirementAge").value = 65;
        document.getElementById("annualIncome").value = 80000;
        document.getElementById("incomeGrowth").value = 3;
        document.getElementById("taxRate").value = 25;
        document.getElementById("personalExpenseRate").value = 30;
        document.getElementById("inflationRate").value = 2.5;
        document.getElementById("discountRate").value = 6;
        document.getElementById("existingAssets").value = 0;
        document.getElementById("errorMsg").textContent = "";
        document.getElementById("results-section").classList.add("hidden");
      });

      // Basic mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden");
          this.setAttribute("aria-expanded", String(isHidden));
        });
    </script>

