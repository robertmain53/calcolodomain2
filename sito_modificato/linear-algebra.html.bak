    <script>
      // Mobile menu toggle
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const expanded =
            mobileToggle.getAttribute("aria-expanded") === "true";
          mobileToggle.setAttribute("aria-expanded", String(!expanded));
          mobileMenu.classList.toggle("hidden");
        });
      }

      const sizeSelect = document.getElementById("matrix-size-select");
      const matrixContainer = document.getElementById("matrix-input-container");
      const vectorBContainer = document.getElementById("vector-b-container");
      const calcBtn = document.getElementById("matrix-calc-btn");
      const clearBtn = document.getElementById("matrix-clear-btn");
      const resultEl = document.getElementById("matrix-result");

      function formatNumber(x) {
        if (!isFinite(x)) return "NaN";
        const absx = Math.abs(x);
        if (absx !== 0 && (absx < 1e-6 || absx > 1e8)) {
          return x.toExponential(6);
        }
        return x
          .toFixed(6)
          .replace(/\\.0+$/, "")
          .replace(/\\.(?=e)/, "");
      }

      function buildMatrixInputs(n) {
        if (!matrixContainer || !vectorBContainer) return;

        // Matrix A
        let html = '<table class="matrix-table text-xs">';
        for (let i = 0; i < n; i++) {
          html += "<tr>";
          for (let j = 0; j < n; j++) {
            const id = "a-" + i + "-" + j;
            html +=
              '<td><input type="number" step="any" id="' +
              id +
              '" class="matrix-input-cell border border-gray-300 rounded px-1 py-0.5 text-xs focus:outline-none focus:ring-1 focus:ring-blue-500" /></td>';
          }
          html += "</tr>";
        }
        html += "</table>";
        matrixContainer.innerHTML = html;

        // Vector b
        let vbHtml = "";
        for (let i = 0; i < n; i++) {
          const id = "b-" + i;
          vbHtml +=
            '<input type="number" step="any" id="' +
            id +
            '" class="w-16 border border-gray-300 rounded px-2 py-1 text-xs focus:outline-none focus:ring-1 focus:ring-blue-500" placeholder="b' +
            (i + 1) +
            '" />';
        }
        vectorBContainer.innerHTML = vbHtml;

        // Optional: prefill demo matrix for 3x3
        if (n === 3) {
          const demo = [
            [2, -1, 0],
            [1, 2, 1],
            [0, 1, 3],
          ];
          for (let i = 0; i < 3; i++) {
            for (let j = 0; j < 3; j++) {
              const el = document.getElementById("a-" + i + "-" + j);
              if (el) el.value = demo[i][j];
            }
          }
          const bDemo = [1, 4, 7];
          for (let i = 0; i < 3; i++) {
            const el = document.getElementById("b-" + i);
            if (el) el.value = bDemo[i];
          }
        }
      }

      function readMatrix(n) {
        const A = [];
        for (let i = 0; i < n; i++) {
          const row = [];
          for (let j = 0; j < n; j++) {
            const el = document.getElementById("a-" + i + "-" + j);
            let v = 0;
            if (el && el.value.trim() !== "") {
              const parsed = parseFloat(el.value);
              v = isNaN(parsed) ? 0 : parsed;
            }
            row.push(v);
          }
          A.push(row);
        }
        return A;
      }

      function readVectorB(n) {
        const b = [];
        let allEmpty = true;
        for (let i = 0; i < n; i++) {
          const el = document.getElementById("b-" + i);
          if (!el) {
            b.push(0);
            continue;
          }
          if (el.value.trim() === "") {
            b.push(0);
          } else {
            const parsed = parseFloat(el.value);
            b.push(isNaN(parsed) ? 0 : parsed);
            allEmpty = false;
          }
        }
        return { b, allEmpty };
      }

      function cloneMatrix(M) {
        return M.map((row) => row.slice());
      }

      function gaussianElimination(A) {
        // Returns {U, det, rank, pivots, sign}
        const n = A.length;
        const U = cloneMatrix(A);
        let det = 1;
        let sign = 1;
        const pivots = [];
        const tol = 1e-10;
        let rank = 0;

        for (let k = 0; k < n; k++) {
          // Partial pivoting
          let maxRow = k;
          let maxVal = Math.abs(U[k][k]);
          for (let i = k + 1; i < n; i++) {
            const val = Math.abs(U[i][k]);
            if (val > maxVal) {
              maxVal = val;
              maxRow = i;
            }
          }

          if (maxVal < tol) {
            // Pivot treated as zero
            det = 0;
            // Column k is effectively zero below k; skip to next column
            for (let i = k; i < n; i++) {
              U[i][k] = 0;
            }
            continue;
          }

          if (maxRow !== k) {
            const tmp = U[k];
            U[k] = U[maxRow];
            U[maxRow] = tmp;
            sign *= -1;
          }

          const pivot = U[k][k];
          pivots.push({ row: k, col: k, value: pivot });
          rank += 1;
          det *= pivot;

          for (let i = k + 1; i < n; i++) {
            const factor = U[i][k] / pivot;
            U[i][k] = 0;
            for (let j = k + 1; j < n; j++) {
              U[i][j] -= factor * U[k][j];
            }
          }
        }

        det *= sign;
        return { U, det, rank, pivots, sign };
      }

      function inverseMatrix(A) {
        const n = A.length;
        const tol = 1e-10;
        const M = [];
        for (let i = 0; i < n; i++) {
          M[i] = [];
          for (let j = 0; j < n; j++) {
            M[i][j] = A[i][j];
          }
          for (let j = 0; j < n; j++) {
            M[i][n + j] = i === j ? 1 : 0;
          }
        }

        for (let k = 0; k < n; k++) {
          // Partial pivoting
          let maxRow = k;
          let maxVal = Math.abs(M[k][k]);
          for (let i = k + 1; i < n; i++) {
            const val = Math.abs(M[i][k]);
            if (val > maxVal) {
              maxVal = val;
              maxRow = i;
            }
          }
          if (maxVal < tol) {
            return null; // singular
          }
          if (maxRow !== k) {
            const tmp = M[k];
            M[k] = M[maxRow];
            M[maxRow] = tmp;
          }

          const pivot = M[k][k];
          for (let j = 0; j < 2 * n; j++) {
            M[k][j] / pivot;
          }

          for (let i = 0; i < n; i++) {
            if (i === k) continue;
            const factor = M[i][k];
            for (let j = 0; j < 2 * n; j++) {
              M[i][j] -= factor * M[k][j];
            }
          }
        }

        const inv = [];
        for (let i = 0; i < n; i++) {
          inv[i] = [];
          for (let j = 0; j < n; j++) {
            inv[i][j] = M[i][n + j];
          }
        }
        return inv;
      }

      function solveSystem(A, b) {
        const n = A.length;
        const tol = 1e-10;
        const M = [];
        for (let i = 0; i < n; i++) {
          M[i] = A[i].slice();
          M[i].push(b[i]);
        }

        let rankA = 0;
        let rankAug = 0;

        // Forward elimination
        let row = 0;
        for (let col = 0; col < n && row < n; col++) {
          // Pivot
          let pivotRow = row;
          let maxVal = Math.abs(M[row][col]);
          for (let i = row + 1; i < n; i++) {
            const val = Math.abs(M[i][col]);
            if (val > maxVal) {
              maxVal = val;
              pivotRow = i;
            }
          }
          if (maxVal < tol) {
            continue; // move to next column
          }
          if (pivotRow !== row) {
            const tmp = M[row];
            M[row] = M[pivotRow];
            M[pivotRow] = tmp;
          }

          // Normalize pivot row
          const pivot = M[row][col];
          for (let j = col; j <= n; j++) {
            M[row][j] / pivot;
          }

          // Eliminate below
          for (let i = row + 1; i < n; i++) {
            const factor = M[i][col];
            for (let j = col; j <= n; j++) {
              M[i][j] -= factor * M[row][j];
            }
          }

          row++;
        }

        // Rank computations
        rankAug = 0;
        rankA = 0;
        for (let i = 0; i < n; i++) {
          let nonzeroA = false;
          let nonzeroAug = false;
          for (let j = 0; j < n; j++) {
            if (Math.abs(M[i][j]) > tol) {
              nonzeroA = true;
              nonzeroAug = true;
              break;
            }
          }
          if (!nonzeroAug && Math.abs(M[i][n]) > tol) {
            nonzeroAug = true;
          }
          if (nonzeroA) rankA++;
          if (nonzeroAug) rankAug++;
        }

        if (rankA < rankAug) {
          return {
            type: "inconsistent",
            message: "System is inconsistent (no solution).",
          };
        }
        if (rankA < n) {
          return {
            type: "underdetermined",
            message:
              "System has infinitely many solutions (rank-deficient). This tool reports one numerical solution if identifiable.",
          };
        }

        // Back-substitution (matrix now in row-echelon, not necessarily reduced)
        const x = new Array(n).fill(0);
        for (let i = n - 1; i >= 0; i--) {
          // Find first non-zero coefficient in row
          let leadCol = -1;
          for (let j = 0; j < n; j++) {
            if (Math.abs(M[i][j]) > tol) {
              leadCol = j;
              break;
            }
          }
          if (leadCol === -1) {
            // row of zeros -> free variable; leave x[i] = 0
            continue;
          }
          let sum = M[i][n];
          for (let j = leadCol + 1; j < n; j++) {
            sum -= M[i][j] * x[j];
          }
          x[leadCol] = sum / M[i][leadCol];
        }

        // Compute residual
        const residual = [];
        for (let i = 0; i < n; i++) {
          let s = 0;
          for (let j = 0; j < n; j++) {
            s += A[i][j] * x[j];
          }
          residual[i] = s - b[i];
        }

        return { type: "unique", x, residual };
      }

      function renderMatrixTable(M, caption) {
        const n = M.length;
        const m = M[0].length;
        let html = "";
        if (caption) {
          html += '<p class="font-semibold mb-1">' + caption + "</p>";
        }
        html +=
          '<div class="overflow-x-auto"><table class="output-matrix-table text-xs">';
        for (let i = 0; i < n; i++) {
          html += "<tr>";
          for (let j = 0; j < m; j++) {
            html +=
              '<td class="px-2 py-1 font-mono">' +
              formatNumber(M[i][j]) +
              "</td>";
          }
          html += "</tr>";
        }
        html += "</table></div>";
        return html;
      }

      function calculate() {
        if (!sizeSelect || !resultEl) return;
        const n = parseInt(sizeSelect.value, 10);
        const A = readMatrix(n);
        const { b, allEmpty } = readVectorB(n);

        // Basic quantities
        const trace = A.reduce((acc, row, i) => acc + row[i], 0);
        const ge = gaussianElimination(A);
        const det = ge.det;
        const rank = ge.rank;

        const tol = 1e-10;
        const isSingular = Math.abs(det) < tol || rank < n;

        let html = '<div class="space-y-3">';
        html +=
          '<p><span class="font-semibold">Matrix size:</span> ' +
          n +
          " × " +
          n +
          "</p>";
        html +=
          '<p><span class="font-semibold">Trace:</span> <span class="font-mono">' +
          formatNumber(trace) +
          "</span></p>";
        html +=
          '<p><span class="font-semibold">Determinant:</span> <span class="font-mono">' +
          formatNumber(det) +
          "</span></p>";
        html +=
          '<p><span class="font-semibold">Rank (numeric, tol 1e-10):</span> <span class="font-mono">' +
          rank +
          "</span></p>";

        if (isSingular) {
          html +=
            '<p class="text-yellow-700 text-xs">The matrix behaves as singular or nearly singular under the chosen tolerance. Inverse and unique solutions may not exist or may be numerically unstable.</p>';
        } else {
          html +=
            '<p class="text-green-700 text-xs">Matrix appears numerically nonsingular (full rank and determinant not close to zero).</p>';
        }

        // Inverse
        if (!isSingular) {
          const inv = inverseMatrix(A);
          if (inv) {
            html +=
              '<div class="mt-2">' +
              renderMatrixTable(inv, "Inverse matrix A⁻¹ (approximate)") +
              "</div>";
          } else {
            html +=
              '<p class="text-yellow-700 text-xs mt-2">Inverse computation failed due to numerical instability, even though the determinant estimate is nonzero.</p>';
          }
        } else {
          html +=
            '<p class="mt-2 text-xs text-gray-600">Inverse is not computed because the matrix is singular or nearly singular.</p>';
        }

        // Solve system if b provided
        if (!allEmpty) {
          html += '<hr class="my-3" />';
          html += '<p class="font-semibold">System solution for Ax = b</p>';
          html +=
            '<p class="text-xs text-gray-600 mb-1">Using the vector b you entered, with components: ' +
            b
              .map(
                (v, i) =>
                  '<span class="font-mono">b' +
                  (i + 1) +
                  " = " +
                  formatNumber(v) +
                  "</span>"
              )
              .join(", ") +
            "</p>";

          const sol = solveSystem(A, b);
          if (sol.type === "inconsistent") {
            html += '<p class="text-red-700 text-sm">' + sol.message + "</p>";
          } else if (sol.type === "underdetermined") {
            html +=
              '<p class="text-yellow-700 text-sm mb-1">' + sol.message + "</p>";
            if (sol.x) {
              html +=
                '<p class="text-sm">One numerical solution (with some free variables implicitly set) is:</p>';
              html += '<ul class="list-disc ml-5 text-xs">';
              sol.x.forEach((v, i) => {
                html +=
                  '<li><span class="font-mono">x' +
                  (i + 1) +
                  " ≈ " +
                  formatNumber(v) +
                  "</span></li>";
              });
              html += "</ul>";
            } else {
              html +=
                '<p class="text-xs text-gray-600">Due to rank deficiency, this basic solver reports rank information but not a parametric formula for all solutions.</p>';
            }
          } else if (sol.type === "unique") {
            html +=
              '<p class="text-sm">Unique solution (within numerical tolerance):</p>';
            html += '<ul class="list-disc ml-5 text-xs">';
            sol.x.forEach((v, i) => {
              html +=
                '<li><span class="font-mono">x' +
                (i + 1) +
                " ≈ " +
                formatNumber(v) +
                "</span></li>";
            });
            html += "</ul>";

            html +=
              '<p class="mt-1 text-xs text-gray-600">Residual vector r = Ax − b:</p>';
            html += '<ul class="list-disc ml-5 text-xs">';
            sol.residual.forEach((v, i) => {
              html +=
                '<li><span class="font-mono">r' +
                (i + 1) +
                " ≈ " +
                formatNumber(v) +
                "</span></li>";
            });
            html += "</ul>";
          }
        }

        html +=
          '<p class="mt-2 text-xs text-gray-500">This tool uses numerical linear algebra. For proofs or symbolic manipulations, refer to a linear algebra textbook or computer algebra system.</p>';
        html += "</div>";
        resultEl.innerHTML = html;
      }

      if (sizeSelect) {
        sizeSelect.addEventListener("change", () => {
          const n = parseInt(sizeSelect.value, 10);
          buildMatrixInputs(n);
          if (resultEl) {
            resultEl.innerHTML =
              '<p class="text-gray-500">Determinant, rank, trace, inverse (if it exists), and system solution details will appear here after you click <span class="font-semibold">Calculate</span>.</p>';
          }
        });
      }

      if (calcBtn) {
        calcBtn.addEventListener("click", calculate);
      }

      if (clearBtn) {
        clearBtn.addEventListener("click", () => {
          const n = parseInt(sizeSelect.value, 10);
          for (let i = 0; i < n; i++) {
            for (let j = 0; j < n; j++) {
              const el = document.getElementById("a-" + i + "-" + j);
              if (el) el.value = "";
            }
            const bEl = document.getElementById("b-" + i);
            if (bEl) bEl.value = "";
          }
          if (resultEl) {
            resultEl.innerHTML =
              '<p class="text-gray-500">Determinant, rank, trace, inverse (if it exists), and system solution details will appear here after you click <span class="font-semibold">Calculate</span>.</p>';
          }
        });
      }

      // FAQ toggle
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            if (!answer) return;
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden", !isHidden);
            const icon = btn.querySelector("span:last-child");
            if (icon) icon.textContent = isHidden ? "−" : "+";
          });
        });

      // Initialize default 3x3 matrix inputs on load
      document.addEventListener("DOMContentLoaded", () => {
        const n = parseInt(sizeSelect.value, 10);
        buildMatrixInputs(n);
      });
    </script>

