          name: "Manitoba",
          type: "GST + PST",
          gst: 5,
          prov: 7,
          total: 12,
        },
        {
          code: "NB",
          name: "New Brunswick",
          type: "HST",
          gst: 5,
          prov: 10,
          total: 15,
        },
        {
          code: "NL",
          name: "Newfoundland and Labrador",
          type: "HST",
          gst: 5,
          prov: 10,
          total: 15,
        },
        {
          code: "NS",
          name: "Nova Scotia",
          type: "HST",
          gst: 5,
          prov: 10,
          total: 15,
        },
        {
          code: "NT",
          name: "Northwest Territories",
          type: "GST only",
          gst: 5,
          prov: 0,
          total: 5,
        },
        {
          code: "NU",
          name: "Nunavut",
          type: "GST only",
          gst: 5,
          prov: 0,
          total: 5,
        },
        {
          code: "ON",
          name: "Ontario",
          type: "HST",
          gst: 5,
          prov: 8,
          total: 13,
        },
        {
          code: "PE",
          name: "Prince Edward Island",
          type: "HST",
          gst: 5,
          prov: 10,
          total: 15,
        },
        {
          code: "QC",
          name: "Quebec",
          type: "GST + QST",
          gst: 5,
          prov: 9.975,
          total: 14.975,
        },
        {
          code: "SK",
          name: "Saskatchewan",
          type: "GST + PST",
          gst: 5,
          prov: 6,
          total: 11,
        },
        {
          code: "YT",
          name: "Yukon",
          type: "GST only",
          gst: 5,
          prov: 0,
          total: 5,
        },
      ];

      function formatMoney(value) {
        if (!isFinite(value)) return "$0.00";
        return "$" + value.toFixed(2);
      }

      function populateProvinceSelect() {
        const select = document.getElementById("province");
        PROVINCES.forEach((p) => {
          const opt = document.createElement("option");
          opt.value = p.code;
          opt.textContent = `${p.name} (${p.total}% ${
            p.type.includes("HST") ? "HST" : "total"
          })`;
          select.appendChild(opt);
        });
        select.value = "ON"; // default Ontario
        updateProvinceInfo();
      }

      function populateRatesTable() {
        const tbody = document.getElementById("rates-table-body");
        PROVINCES.forEach((p) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 whitespace-nowrap">${p.name}</td>
        <td class="px-3 py-2">${p.gst.toFixed(3).replace(/\.?0+$/, "")}%</td>
        <td class="px-3 py-2">${
          p.prov ? p.prov.toFixed(3).replace(/\.?0+$/, "") + "%" : "—"
        }</td>
        <td class="px-3 py-2 font-medium">${p.total
          .toFixed(3)
          .replace(/\.?0+$/, "")}%</td>
        <td class="px-3 py-2">${p.type}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function getSelectedProvince() {
        const code = document.getElementById("province").value;
        return PROVINCES.find((p) => p.code === code) || PROVINCES[0];
      }

      function updateProvinceInfo() {
        const p = getSelectedProvince();
        const info = document.getElementById("province-rate-info");
        const gstBadge = document.getElementById("gst-rate-badge");
        const provBadge = document.getElementById("prov-rate-badge");

        info.textContent = `${p.name}: ${p.total}% total (${p.gst}% GST${
          p.prov ? ` + ${p.prov}% provincial` : ""
        }) – ${p.type}.`;
        gstBadge.textContent = `${p.gst.toFixed(3).replace(/\.?0+$/, "")}%`;
        provBadge.textContent = `${p.prov.toFixed(3).replace(/\.?0+$/, "")}%`;
      }

      function setMode(mode) {
        const addBtn = document.getElementById("mode-add");
        const removeBtn = document.getElementById("mode-remove");
        const label = document.getElementById("amount-label");

        if (mode === "add") {
          addBtn.classList.remove(
            "bg-white",
            "text-gray-700",
            "border-gray-300"
          );
          addBtn.classList.add("bg-blue-600", "text-white", "border-blue-600");
          removeBtn.classList.remove(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          removeBtn.classList.add(
            "bg-white",
            "text-gray-700",
            "border-gray-300"
          );
          label.textContent = "Amount before tax";
          document.getElementById("amount-input").placeholder = "e.g. 100.00";
          document
            .getElementById("amount-input")
            .setAttribute("aria-label", "Amount before tax");
          document.getElementById("amount-input").dataset.mode = "add";
        } else {
          removeBtn.classList.remove(
            "bg-white",
            "text-gray-700",
            "border-gray-300"
          );
          removeBtn.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          addBtn.classList.remove(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          addBtn.classList.add("bg-white", "text-gray-700", "border-gray-300");
          label.textContent = "Total amount including tax";
          document.getElementById("amount-input").placeholder = "e.g. 113.00";
          document
            .getElementById("amount-input")
            .setAttribute("aria-label", "Total amount including tax");
          document.getElementById("amount-input").dataset.mode = "remove";
        }
      }

      function calculate() {
        const amountInput = document.getElementById("amount-input");
        const customRateInput = document.getElementById("custom-rate");
        const errorMsg = document.getElementById("error-msg");
        const resultsCard = document.getElementById("results-card");
        const mode = amountInput.dataset.mode || "add";
        const province = getSelectedProvince();

        let amount = parseFloat(amountInput.value);
        if (isNaN(amount) || amount < 0) {
          errorMsg.textContent = "Please enter a valid non-negative amount.";
          resultsCard.classList.add("hidden");
          return;
        }

        let customRate = parseFloat(customRateInput.value);
        if (!isNaN(customRate) && (customRate < 0 || customRate > 100)) {
          errorMsg.textContent = "Custom rate must be between 0% and 100%.";
          resultsCard.classList.add("hidden");
          return;
        }

        errorMsg.textContent = "";

        const totalRate = !isNaN(customRate) ? customRate : province.total;
        const gstRate = province.gst;
        const provRate = province.prov;

        let beforeTax, total, gstAmount, provAmount;

        if (mode === "add") {
          beforeTax = amount;
          total = beforeTax * (1 + totalRate / 100);
        } else {
          total = amount;
          beforeTax = total / (1 + totalRate / 100);
        }

        // Split GST and provincial portions proportionally to their share of the total rate
        if (totalRate > 0) {
          const gstShare = gstRate / totalRate;
          const provShare = provRate / totalRate;
          const taxAmount = total - beforeTax;
          gstAmount = taxAmount * gstShare;
          provAmount = taxAmount * provShare;
        } else {
          gstAmount = 0;
          provAmount = 0;
        }

        document.getElementById("result-before").textContent =
          formatMoney(beforeTax);
        document.getElementById("result-total").textContent =
          formatMoney(total);
        document.getElementById("result-gst").textContent =
          formatMoney(gstAmount);
        document.getElementById("result-prov").textContent =
          formatMoney(provAmount);

        const modeText = document.getElementById("results-mode-text");
        if (mode === "add") {
          modeText.textContent = `Added ${totalRate
            .toFixed(3)
            .replace(/\.?0+$/, "")}% tax to a before-tax amount in ${
            province.name
          }.`;
        } else {
          modeText.textContent = `Removed ${totalRate
            .toFixed(3)
            .replace(/\.?0+$/, "")}% tax from a tax-included total in ${
            province.name
          }.`;
        }

        const note = document.getElementById("results-note");
        if (!isNaN(customRate)) {
          note.textContent = `Using custom combined rate of ${customRate
            .toFixed(3)
            .replace(/\.?0+$/, "")}%. Default for ${
            province.name
          } is ${province.total.toFixed(3).replace(/\.?0+$/, "")}%.`;
        } else {
          note.textContent = `Using default rate for ${
            province.name
          }: ${province.total.toFixed(3).replace(/\.?0+$/, "")}% (${
            province.gst
          }% GST${province.prov ? ` + ${province.prov}% provincial` : ""}).`;
        }

        resultsCard.classList.remove("hidden");
      }

      function clearForm() {
        document.getElementById("amount-input").value = "";
        document.getElementById("custom-rate").value = "";
        document.getElementById("error-msg").textContent = "";
        document.getElementById("results-card").classList.add("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateProvinceSelect();
        populateRatesTable();
        setMode("add");

        document.getElementById("province").addEventListener("change", () => {
          updateProvinceInfo();
          document.getElementById("results-card").classList.add("hidden");
        });

        document.getElementById("mode-add").addEventListener("click", () => {
          setMode("add");
          document.getElementById("results-card").classList.add("hidden");
        });

        document.getElementById("mode-remove").addEventListener("click", () => {
          setMode("remove");
          document.getElementById("results-card").classList.add("hidden");
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculate);
        document
          .getElementById("clear-btn")
          .addEventListener("click", clearForm);

        document
          .getElementById("amount-input")
          .addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              calculate();
            }
          });
      });

      // Mobile menu script (simple)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
