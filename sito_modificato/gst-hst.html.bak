    <script>
      // Province / territory configuration
      const PROVINCES = [
        {
          code: "AB",
          name: "Alberta",
          type: "GST only",
          gst: 5,
          prov: 0,
          total: 5,
        },
        {
          code: "BC",
          name: "British Columbia",
          type: "GST + PST",
          gst: 5,
          prov: 7,
          total: 12,
        },
        {
