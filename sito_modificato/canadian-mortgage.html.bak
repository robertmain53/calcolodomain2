    <script>
      // Utility: format currency in CAD
      function formatCurrency(value) {
        if (!isFinite(value)) return "C$0";
        return new Intl.NumberFormat("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 2,
        }).format(value);
      }

      function getPaymentFrequencyLabel(code) {
        switch (code) {
          case "12":
            return "monthly";
          case "24":
            return "semi-monthly";
          case "26":
            return "bi-weekly";
          case "26-accel":
            return "accelerated bi-weekly";
          case "52":
            return "weekly";
          case "52-accel":
            return "accelerated weekly";
          default:
            return "monthly";
        }
      }

      function calculateCMHCPremium(baseMortgage, downPercent) {
        // Approximate CMHC/Sagen premium tiers
        let rate = 0;
        if (downPercent < 5) {
          // Technically not allowed under current rules; treat as 5–10% bracket
          rate = 0.04;
        } else if (downPercent < 10) {
          rate = 0.04;
        } else if (downPercent < 15) {
          rate = 0.031;
        } else if (downPercent < 20) {
          rate = 0.028;
        } else {
          rate = 0;
        }
        return baseMortgage * rate;
      }

      function computePayment(principal, annualRate, years, freqCode) {
        if (principal <= 0 || annualRate < 0 || years <= 0) return 0;

        let m; // payments per year
        let accel = false;

        if (freqCode === "26-accel") {
          m = 12; // compute monthly first, then adjust
          accel = "biweekly";
        } else if (freqCode === "52-accel") {
          m = 12;
          accel = "weekly";
        } else {
          m = parseInt(freqCode, 10);
        }

        const n = years * m;
        const i = annualRate / 100 / m;

        if (i === 0) {
          let basePayment = principal / n;
          if (accel === "biweekly") return basePayment / 2;
          if (accel === "weekly") return basePayment / 4;
          return basePayment;
        }

        const factor = Math.pow(1 + i, n);
        let basePayment = (principal * (i * factor)) / (factor - 1);

        if (accel === "biweekly") {
          // half of monthly payment, paid 26 times
          return basePayment / 2;
        }
        if (accel === "weekly") {
          // quarter of monthly payment, paid 52 times
          return basePayment / 4;
        }

        return basePayment;
      }

      function buildAmortizationSchedule(
        principal,
        annualRate,
        years,
        freqCode,
        payment
      ) {
        const schedule = [];
        let m;
        if (freqCode === "26-accel" || freqCode === "52-accel") {
          // For schedule, use actual number of payments per year
          m = freqCode === "26-accel" ? 26 : 52;
        } else {
          m = parseInt(freqCode, 10);
        }
        const n = years * m;
        const i = annualRate / 100 / m;

        let balance = principal;
        for (let k = 1; k <= n; k++) {
          const interest = balance * i;
          let principalPaid = payment - interest;

          if (principalPaid > balance) {
            principalPaid = balance;
          }

          balance = balance - principalPaid;
          if (balance < 0) balance = 0;

          schedule.push({
            period: k,
            payment: payment,
            principal: principalPaid,
            interest: interest,
            balance: balance,
          });

          if (balance <= 0) break;
        }
        return schedule;
      }

      function updateScheduleTable(schedule) {
        const tbody = document.getElementById("scheduleBody");
        tbody.innerHTML = "";

        if (!schedule || schedule.length === 0) {
          const tr = document.createElement("tr");
          const td = document.createElement("td");
          td.colSpan = 5;
          td.className = "px-3 py-2 text-center text-gray-500";
          td.textContent =
            "Calculate a mortgage to see the amortization schedule.";
          tr.appendChild(td);
          tbody.appendChild(tr);
          return;
        }

        schedule.slice(0, 360).forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 border-b text-gray-700">${row.period}</td>
        <td class="px-3 py-1 border-b text-gray-700">${formatCurrency(
          row.payment
        )}</td>
        <td class="px-3 py-1 border-b text-emerald-700">${formatCurrency(
          row.principal
        )}</td>
        <td class="px-3 py-1 border-b text-red-700">${formatCurrency(
          row.interest
        )}</td>
        <td class="px-3 py-1 border-b text-gray-700">${formatCurrency(
          row.balance
        )}</td>
      `;
          tbody.appendChild(tr);
        });

        if (schedule.length > 360) {
          const tr = document.createElement("tr");
          const td = document.createElement("td");
          td.colSpan = 5;
          td.className = "px-3 py-2 text-center text-gray-500 bg-gray-50";
          td.textContent = `Showing first 360 payments out of ${schedule.length}.`;
          tr.appendChild(td);
          tbody.appendChild(tr);
        }
      }

      function recalc() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        let downAmount =
          parseFloat(document.getElementById("downPaymentAmount").value) || 0;
        let downPercent =
          parseFloat(document.getElementById("downPaymentPercent").value) || 0;
        const amortYears =
          parseInt(document.getElementById("amortYears").value, 10) || 25;
        const interestRate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        let stressRate = parseFloat(
          document.getElementById("stressRate").value
        );
        const freqCode = document.getElementById("paymentFrequency").value;
        const propertyTax =
          parseFloat(document.getElementById("propertyTax").value) || 0;
        const heatingCost =
          parseFloat(document.getElementById("heatingCost").value) || 0;

        // Sync down payment amount and percent
        if (homePrice > 0) {
          if (
            document.activeElement ===
            document.getElementById("downPaymentAmount")
          ) {
            downAmount = Math.min(downAmount, homePrice);
            downPercent = (downAmount / homePrice) * 100;
            document.getElementById("downPaymentPercent").value =
              downPercent.toFixed(1);
          } else {
            downPercent = Math.min(Math.max(downPercent, 0), 100);
            downAmount = homePrice * (downPercent / 100);
            document.getElementById("downPaymentAmount").value =
              Math.round(downAmount / 100) * 100;
          }
        }

        const baseMortgage = Math.max(homePrice - downAmount, 0);
        const cmhcPremium = calculateCMHCPremium(baseMortgage, downPercent);
        const totalMortgage = baseMortgage + cmhcPremium;

        document.getElementById("mortgageAmountDisplay").textContent =
          formatCurrency(totalMortgage);
        if (cmhcPremium > 0) {
          document.getElementById(
            "cmhcInfo"
          ).textContent = `Includes estimated CMHC/insurer premium of ${formatCurrency(
            cmhcPremium
          )} (${downPercent.toFixed(1)}% down).`;
        } else {
          document.getElementById("cmhcInfo").textContent =
            "Conventional mortgage (no CMHC insurance estimated).";
        }

        // Regular payment
        const payment = computePayment(
          totalMortgage,
          interestRate,
          amortYears,
          freqCode
        );
        const freqLabel = getPaymentFrequencyLabel(freqCode);
        document.getElementById(
          "paymentDisplay"
        ).textContent = `${formatCurrency(payment)} / ${freqLabel}`;
        document.getElementById(
          "paymentFreqLabel"
        ).textContent = `Based on ${freqLabel} payments over ${amortYears} years.`;

        // Stress-test payment
        if (!isFinite(stressRate) || stressRate <= 0) {
          stressRate = interestRate + 2;
        }
        const stressPayment = computePayment(
          totalMortgage,
          stressRate,
          amortYears,
          freqCode
        );
        document.getElementById(
          "stressPaymentDisplay"
        ).textContent = `${formatCurrency(stressPayment)} / ${freqLabel}`;
        document.getElementById(
          "stressRateLabel"
        ).textContent = `Calculated at qualifying rate of ${stressRate.toFixed(
          2
        )}%.`;

        // Amortization schedule and totals (based on contract rate)
        const schedule = buildAmortizationSchedule(
          totalMortgage,
          interestRate,
          amortYears,
          freqCode,
          payment
        );
        updateScheduleTable(schedule);

        let totalPaid = 0;
        let totalInterest = 0;
        schedule.forEach((row) => {
          totalPaid += row.payment;
          totalInterest += row.interest;
        });

        document.getElementById("totalInterestDisplay").textContent =
          formatCurrency(totalInterest);
        document.getElementById("totalCostDisplay").textContent =
          formatCurrency(totalPaid);

        const principalTotal = totalMortgage;
        const totalCost = principalTotal + totalInterest;
        const principalPercent =
          totalCost > 0 ? (principalTotal / totalCost) * 100 : 0;
        const interestPercent =
          totalCost > 0 ? (totalInterest / totalCost) * 100 : 0;

        document.getElementById("principalBar").style.width =
          principalPercent + "%";
        document.getElementById("interestBar").style.width =
          interestPercent + "%";
        document.getElementById(
          "principalPercentLabel"
        ).textContent = `Principal: ${principalPercent.toFixed(1)}%`;
        document.getElementById(
          "interestPercentLabel"
        ).textContent = `Interest: ${interestPercent.toFixed(1)}%`;

        // Optionally, we could show total housing cost including taxes/fees
        // but we keep the main UI focused on mortgage payment.
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const toggleScheduleBtn = document.getElementById("toggleScheduleBtn");
        const scheduleContainer = document.getElementById("scheduleContainer");

        calculateBtn.addEventListener("click", function (e) {
          e.preventDefault();
          recalc();
          // auto-open schedule on first calculation
          if (scheduleContainer.classList.contains("hidden")) {
            scheduleContainer.classList.remove("hidden");
            toggleScheduleBtn.textContent = "Hide schedule";
          }
        });

        resetBtn.addEventListener("click", function (e) {
          e.preventDefault();
          document.getElementById("homePrice").value = 600000;
          document.getElementById("downPaymentAmount").value = 120000;
          document.getElementById("downPaymentPercent").value = 20;
          document.getElementById("amortYears").value = 25;
          document.getElementById("interestRate").value = 4.89;
          document.getElementById("stressRate").value = "";
          document.getElementById("paymentFrequency").value = "12";
          document.getElementById("propertyTax").value = 0;
          document.getElementById("heatingCost").value = 0;
          recalc();
        });

        toggleScheduleBtn.addEventListener("click", function () {
          const hidden = scheduleContainer.classList.toggle("hidden");
          toggleScheduleBtn.textContent = hidden
            ? "Show schedule"
            : "Hide schedule";
        });

        // Recalculate when key inputs change (for responsiveness)
        [
          "homePrice",
          "downPaymentAmount",
          "downPaymentPercent",
          "amortYears",
          "interestRate",
          "stressRate",
          "paymentFrequency",
          "propertyTax",
          "heatingCost",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("change", recalc);
            el.addEventListener("blur", recalc);
          }
        });

        // Initial calculation
        recalc();
      });
    </script>

