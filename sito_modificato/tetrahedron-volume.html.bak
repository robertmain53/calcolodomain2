              <script>
                (function () {
                  function formatNumber(v) {
                    if (!isFinite(v)) return '';
                    const a = Math.abs(v);
                    if (a === 0) return '0';
                    if (a < 1e-4 || a >= 1e6) return v.toExponential(6);
                    if (a < 1) return v.toFixed(6);
                    if (a < 1000) return v.toFixed(4);
                    return v.toFixed(3);
                  }

                  // Tabs
                  const tabs = document.querySelectorAll('.tab-button');
                  const panels = {
                    regular: document.getElementById('panel-regular'),
                    baseheight: document.getElementById('panel-baseheight'),
                    coordinates: document.getElementById('panel-coordinates')
                  };

                  tabs.forEach(function (tab) {
                    tab.addEventListener('click', function () {
                      const mode = tab.getAttribute('data-mode');
                      tabs.forEach(function (t) {
                        const isActive = t === tab;
                        t.setAttribute('aria-selected', isActive ? 'true' : 'false');
                      });
                      Object.keys(panels).forEach(function (k) {
                        panels[k].hidden = k !== mode;
                      });
                    });
                  });

                  // Regular tetrahedron
                  const edgeInput = document.getElementById('edge-length');
                  const edgeUnitInput = document.getElementById('edge-unit');
                  const regularVolume = document.getElementById('regular-volume');
                  const regularHeight = document.getElementById('regular-height');
                  const regularFaceArea = document.getElementById('regular-face-area');
                  const regularSurfaceArea = document.getElementById('regular-surface-area');
                  const regularInradius = document.getElementById('regular-inradius');
                  const regularCircumradius = document.getElementById('regular-circumradius');
                  const regularSummary = document.getElementById('regular-summary');

                  function computeRegular() {
                    const a = parseFloat(edgeInput.value);
                    if (!(a > 0)) {
                      regularVolume.textContent = '–';
                      regularHeight.textContent = '–';
                      regularFaceArea.textContent = '–';
                      regularSurfaceArea.textContent = '–';
                      regularInradius.textContent = '–';
                      regularCircumradius.textContent = '–';
                      regularSummary.textContent = 'Enter a positive edge length to compute the regular tetrahedron properties.';
                      return;
                    }
                    const unit = edgeUnitInput.value.trim() || 'units';

                    const sqrt2 = Math.sqrt(2);
                    const sqrt3 = Math.sqrt(3);
                    const sqrt6 = Math.sqrt(6);

                    const V = Math.pow(a, 3) / (6 * sqrt2);
                    const h = (sqrt6 / 3) * a;
                    const A_face = (sqrt3 / 4) * a * a;
                    const A_tot = 4 * A_face;
                    const r = (sqrt6 / 12) * a;
                    const R = (sqrt6 / 4) * a;

                    regularVolume.textContent = formatNumber(V) + ' ' + unit + '³';
                    regularHeight.textContent = formatNumber(h) + ' ' + unit;
                    regularFaceArea.textContent = formatNumber(A_face) + ' ' + unit + '²';
                    regularSurfaceArea.textContent = formatNumber(A_tot) + ' ' + unit + '²';
                    regularInradius.textContent = formatNumber(r) + ' ' + unit;
                    regularCircumradius.textContent = formatNumber(R) + ' ' + unit;
                    regularSummary.textContent = 'For a = ' + a + ' ' + unit + ', V ≈ ' + formatNumber(V) + ' ' + unit + '³.';
                  }

                  document.getElementById('btn-regular-calc').addEventListener('click', computeRegular);

                  // Base & height
                  const baseAreaInput = document.getElementById('base-area');
                  const heightInput = document.getElementById('height');
                  const baseHeightVolume = document.getElementById('baseheight-volume');
                  const baseHeightSummary = document.getElementById('baseheight-summary');

                  function computeBaseHeight() {
                    const A = parseFloat(baseAreaInput.value);
                    const h = parseFloat(heightInput.value);
                    if (!(A > 0) || !(h > 0)) {
                      baseHeightVolume.textContent = '–';
                      baseHeightSummary.textContent = 'Enter positive values for both base area and height.';
                      return;
                    }
                    const V = (A * h) / 3;
                    baseHeightVolume.textContent = formatNumber(V) + ' (same cubic unit as A·h)';
                    baseHeightSummary.textContent = 'With A = ' + A + ' and h = ' + h + ', V = (1/3)·A·h ≈ ' + formatNumber(V) + '.';
                  }

                  document.getElementById('btn-baseheight-calc').addEventListener('click', computeBaseHeight);

                  // Coordinates
                  function getCoord(id) {
                    const v = parseFloat(document.getElementById(id).value);
                    if (!isFinite(v)) throw new Error('missing');
                    return v;
                  }

                  const coordVolume = document.getElementById('coordinates-volume');
                  const coordSummary = document.getElementById('coordinates-summary');

                  function computeCoordinates() {
                    try {
                      const ax = getCoord('ax'), ay = getCoord('ay'), az = getCoord('az');
                      const bx = getCoord('bx'), by = getCoord('by'), bz = getCoord('bz');
                      const cx = getCoord('cx'), cy = getCoord('cy'), cz = getCoord('cz');
                      const dx = getCoord('dx'), dy = getCoord('dy'), dz = getCoord('dz');

                      const abx = bx - ax, aby = by - ay, abz = bz - az;
                      const acx = cx - ax, acy = cy - ay, acz = cz - az;
                      const adx = dx - ax, ady = dy - ay, adz = dz - az;

                      const cxad = acy * adz - acz * ady;
                      const cyad = acz * adx - acx * adz;
                      const czad = acx * ady - acy * adx;

                      const triple = abx * cxad + aby * cyad + abz * czad;
                      const V = Math.abs(triple) / 6;

                      if (!(V > 0)) {
                        coordVolume.textContent = '0';
                        coordSummary.textContent = 'The four points may be coplanar or repeated, giving zero volume.';
                        return;
                      }

                      coordVolume.textContent = formatNumber(V) + ' (cubic coordinate units)';
                      coordSummary.textContent = 'Volume from coordinates using |det(AB, AC, AD)| / 6. Triple product ≈ ' + formatNumber(triple) + '.';
                    } catch (e) {
                      coordVolume.textContent = '–';
                      coordSummary.textContent = 'Please fill all 12 coordinate fields with numeric values.';
                    }
                  }

                  document.getElementById('btn-coordinates-calc').addEventListener('click', computeCoordinates);
                })();
              </script>
