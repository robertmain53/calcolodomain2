    <script>
      // Baconian cipher implementation
      (function () {
        const modeSelect = document.getElementById("mode-select");
        const alphabetSelect = document.getElementById("alphabet-select");
        const symbolsABBtn = document.getElementById("symbols-ab");
        const symbolsBinaryBtn = document.getElementById("symbols-binary");
        const symbolsCustomBtn = document.getElementById("symbols-custom");
        const customWrapper = document.getElementById("custom-symbols-wrapper");
        const customAInput = document.getElementById("custom-a");
        const customBInput = document.getElementById("custom-b");
        const mergeIJ = document.getElementById("merge-ij");
        const mergeUV = document.getElementById("merge-uv");
        const stripNonLetters = document.getElementById("strip-nonletters");
        const group5 = document.getElementById("group-5");
        const showSpaces = document.getElementById("show-spaces");
        const caseInsensitive = document.getElementById("case-insensitive");
        const inputText = document.getElementById("input-text");
        const outputText = document.getElementById("output-text");
        const runBtn = document.getElementById("run-btn");
        const swapBtn = document.getElementById("swap-btn");
        const copyOutputBtn = document.getElementById("copy-output-btn");
        const statusLine = document.getElementById("status-line");
        const inputLabelExtra = document.getElementById("input-label-extra");
        const outputLabelExtra = document.getElementById("output-label-extra");

        const stegSeq = document.getElementById("steg-sequence");
        const stegCover = document.getElementById("steg-cover");
        const stegStyle = document.getElementById("steg-style");
        const stegApplyBtn = document.getElementById("steg-apply-btn");
        const stegResult = document.getElementById("steg-result");
        const stegStatus = document.getElementById("steg-status");

        let symbolMode = "ab"; // 'ab', 'binary', 'custom'

        function setSymbolMode(mode) {
          symbolMode = mode;
          [symbolsABBtn, symbolsBinaryBtn, symbolsCustomBtn].forEach((btn) =>
            btn.classList.remove("toggle-btn-active")
          );
          if (mode === "ab") symbolsABBtn.classList.add("toggle-btn-active");
          if (mode === "binary")
            symbolsBinaryBtn.classList.add("toggle-btn-active");
          if (mode === "custom")
            symbolsCustomBtn.classList.add("toggle-btn-active");
          customWrapper.classList.toggle("hidden", mode !== "custom");
        }

        symbolsABBtn.addEventListener("click", () => setSymbolMode("ab"));
        symbolsBinaryBtn.addEventListener("click", () =>
          setSymbolMode("binary")
        );
        symbolsCustomBtn.addEventListener("click", () =>
          setSymbolMode("custom")
        );

        function updateModeLabels() {
          if (modeSelect.value === "encode") {
            inputLabelExtra.textContent = "(plaintext)";
            outputLabelExtra.textContent = "(Baconian code)";
          } else {
            inputLabelExtra.textContent = "(Baconian code)";
            outputLabelExtra.textContent = "(plaintext)";
          }
        }
        modeSelect.addEventListener("change", updateModeLabels);
        updateModeLabels();

        // Build Baconian tables
        function buildTables() {
          const variant = alphabetSelect.value; // '24' or '26'
          const letters24 = [
            "A",
            "B",
            "C",
            "D",
            "E",
            "F",
            "G",
            "H",
            "I",
            "K",
            "L",
            "M",
            "N",
            "O",
            "P",
            "Q",
            "R",
            "S",
            "T",
            "U",
            "W",
            "X",
            "Y",
            "Z",
          ];
          const patterns = [];
          for (let i = 0; i < 32; i++) {
            let bin = i.toString(2).padStart(5, "0");
            patterns.push(bin.replace(/0/g, "A").replace(/1/g, "B"));
          }
          const encodeMap = {};
          const decodeMap = {};

          if (variant === "24") {
            for (let i = 0; i < letters24.length; i++) {
              const letter = letters24[i];
              const pattern = patterns[i];
              encodeMap[letter] = pattern;
              decodeMap[pattern] = letter;
            }
            // Map J -> I, V -> U for encoding convenience
            encodeMap["J"] = encodeMap["I"];
            encodeMap["V"] = encodeMap["U"];
          } else {
            // 26-letter variant: simple A-Z mapping using first 26 patterns
            const letters26 = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".split("");
            for (let i = 0; i < letters26.length; i++) {
              const letter = letters26[i];
              const pattern = patterns[i];
              encodeMap[letter] = pattern;
              decodeMap[pattern] = letter;
            }
          }
          return { encodeMap, decodeMap };
        }

        function normalizePlaintext(text) {
          let t = text.normalize("NFD").replace(/[\u0300-\u036f]/g, ""); // strip accents
          t = t.toUpperCase();
          if (mergeIJ.checked) {
            t = t.replace(/J/g, "I");
          }
          if (mergeUV.checked) {
            t = t.replace(/V/g, "U");
          }
          return t;
        }

        function getSymbols() {
          if (symbolMode === "ab") return { a: "A", b: "B" };
          if (symbolMode === "binary") return { a: "0", b: "1" };
          let a = customAInput.value || "A";
          let b = customBInput.value || "B";
          if (a === b) {
            b = b === "B" ? "C" : "B";
          }
          return { a, b };
        }

        function encode() {
          const { encodeMap } = buildTables();
          const symbols = getSymbols();
          const raw = inputText.value;
          const normalized = normalizePlaintext(raw);
          let result = [];
          let lettersProcessed = 0;
          for (let i = 0; i < normalized.length; i++) {
            const ch = normalized[i];
            if (!/[A-Z]/.test(ch)) {
              if (!stripNonLetters.checked && ch === " ") {
                result.push(" "); // keep spaces if requested
              }
              continue;
            }
            const pattern = encodeMap[ch];
            if (!pattern) continue;
            lettersProcessed++;
            for (const p of pattern) {
              result.push(p === "A" ? symbols.a : symbols.b);
            }
            if (showSpaces.checked && raw[i] === " ") {
              result.push(" ");
            }
          }

          // Grouping into blocks of 5 (ignoring spaces)
          if (group5.checked) {
            const flat = result.join("");
            const isSpace = (c) => /\s/.test(c);
            let grouped = "";
            let count = 0;
            for (let i = 0; i < flat.length; i++) {
              const c = flat[i];
              if (isSpace(c)) {
                grouped += c;
                continue;
              }
              if (count > 0 && count % 5 === 0) {
                grouped += " ";
              }
              grouped += c;
              count++;
            }
            outputText.value = grouped.trim();
          } else {
            outputText.value = result.join("");
          }

          statusLine.textContent = lettersProcessed
            ? `Encoded ${lettersProcessed} letters into ${
                outputText.value.replace(/\s/g, "").length
              } symbols.`
            : "No encodable letters found in input.";
        }

        function decode() {
          const { decodeMap } = buildTables();
          const symbols = getSymbols();
          const raw = inputText.value;
          if (!raw.trim()) {
            outputText.value = "";
            statusLine.textContent = "Input is empty.";
            return;
          }

          // Normalize to A/B internally
          let seq = "";
          const aSym = symbols.a;
          const bSym = symbols.b;
          for (let ch of raw) {
            if (caseInsensitive.checked) ch = ch.toUpperCase();
            if (ch === aSym) seq += "A";
            else if (ch === bSym) seq += "B";
            // ignore others
          }

          const total = seq.length;
          const fullBlocks = Math.floor(total / 5);
          let plaintext = "";
          for (let i = 0; i < fullBlocks; i++) {
            const block = seq.slice(i * 5, i * 5 + 5);
            const letter = decodeMap[block] || "?";
            plaintext += letter;
          }

          outputText.value = plaintext;
          if (total % 5 !== 0) {
            statusLine.textContent = `Decoded ${fullBlocks} full blocks (${
              fullBlocks * 5
            } symbols). Ignored ${total % 5} leftover symbol(s).`;
          } else {
            statusLine.textContent = `Decoded ${fullBlocks} blocks (${total} symbols).`;
          }
        }

        runBtn.addEventListener("click", () => {
          statusLine.textContent = "";
          if (modeSelect.value === "encode") encode();
          else decode();
        });

        swapBtn.addEventListener("click", () => {
          const tmp = inputText.value;
          inputText.value = outputText.value;
          outputText.value = tmp;
          modeSelect.value =
            modeSelect.value === "encode" ? "decode" : "encode";
          updateModeLabels();
          statusLine.textContent = "Swapped input and output and toggled mode.";
        });

        copyOutputBtn.addEventListener("click", () => {
          if (!outputText.value) {
            statusLine.textContent = "Nothing to copy.";
            return;
          }
          outputText.select();
          try {
            document.execCommand("copy");
            statusLine.textContent = "Output copied to clipboard.";
          } catch (e) {
            statusLine.textContent =
              "Unable to copy automatically. Please copy manually.";
          }
        });

        // Steganography helper
        stegApplyBtn.addEventListener("click", () => {
          stegStatus.textContent = "";
          const seqRaw = stegSeq.value;
          const cover = stegCover.value;
          if (!seqRaw.trim() || !cover.trim()) {
            stegStatus.textContent =
              "Please provide both a Baconian sequence and a cover text.";
            stegResult.value = "";
            return;
          }

          // Normalize sequence to A/B
          let seq = "";
          for (let ch of seqRaw.toUpperCase()) {
            if (ch === "A" || ch === "0") seq += "A";
            else if (ch === "B" || ch === "1") seq += "B";
          }
          if (!seq.length) {
            stegStatus.textContent =
              "No valid A/B or 0/1 symbols found in the sequence.";
            stegResult.value = "";
            return;
          }

          // Embed into letters of cover text
          let result = "";
          let idx = 0;
          const style = stegStyle.value;
          for (let i = 0; i < cover.length; i++) {
            const ch = cover[i];
            if (/[A-Za-z]/.test(ch) && idx < seq.length) {
              const bit = seq[idx++];
              if (style === "case") {
                result += bit === "A" ? ch.toLowerCase() : ch.toUpperCase();
              } else if (style === "bold") {
                // Markdown-style bold for B, normal for A
                result += bit === "A" ? ch : "**" + ch + "**";
              }
            } else {
              result += ch;
            }
          }

          if (idx < seq.length) {
            stegStatus.textContent = `Warning: cover text had only ${idx} encodable letters, but sequence length is ${seq.length}. Some symbols were not embedded.`;
          } else {
            stegStatus.textContent = `Embedded ${seq.length} symbols into cover text.`;
          }
          stegResult.value = result;
        });
      })();
    </script>

