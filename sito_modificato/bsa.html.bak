    <script>
      // Utility: show/hide elements
      function show(el) {
        el.classList.remove("hidden");
      }
      function hide(el) {
        el.classList.add("hidden");
      }

      const unitMetricBtn = document.getElementById("unit-metric");
      const unitImperialBtn = document.getElementById("unit-imperial");

      const heightMetricGroup = document.getElementById("height-metric-group");
      const heightImperialGroup = document.getElementById(
        "height-imperial-group"
      );
      const weightMetricGroup = document.getElementById("weight-metric-group");
      const weightImperialGroup = document.getElementById(
        "weight-imperial-group"
      );

      const heightCmInput = document.getElementById("height-cm");
      const heightFtInput = document.getElementById("height-ft");
      const heightInInput = document.getElementById("height-in");
      const weightKgInput = document.getElementById("weight-kg");
      const weightLbInput = document.getElementById("weight-lb");

      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorEl = document.getElementById("input-error");
      const resultsContainer = document.getElementById("results-container");
      const interpretationBox = document.getElementById("interpretation-box");

      let currentUnit = "metric";

      unitMetricBtn.addEventListener("click", () => {
        currentUnit = "metric";
        unitMetricBtn.classList.add("bg-blue-600", "text-white");
        unitMetricBtn.classList.remove(
          "bg-gray-100",
          "text-gray-700",
          "border",
          "border-gray-300"
        );
        unitImperialBtn.classList.remove("bg-blue-600", "text-white");
        unitImperialBtn.classList.add(
          "bg-gray-100",
          "text-gray-700",
          "border",
          "border-gray-300"
        );

        show(heightMetricGroup);
        hide(heightImperialGroup);
        show(weightMetricGroup);
        hide(weightImperialGroup);
      });

      unitImperialBtn.addEventListener("click", () => {
        currentUnit = "imperial";
        unitImperialBtn.classList.add("bg-blue-600", "text-white");
        unitImperialBtn.classList.remove(
          "bg-gray-100",
          "text-gray-700",
          "border",
          "border-gray-300"
        );
        unitMetricBtn.classList.remove("bg-blue-600", "text-white");
        unitMetricBtn.classList.add(
          "bg-gray-100",
          "text-gray-700",
          "border",
          "border-gray-300"
        );

        hide(heightMetricGroup);
        show(heightImperialGroup);
        hide(weightMetricGroup);
        show(weightImperialGroup);
      });

      function toMetric() {
        let hCm, wKg;

        if (currentUnit === "metric") {
          hCm = parseFloat(heightCmInput.value);
          wKg = parseFloat(weightKgInput.value);
        } else {
          const ft = parseFloat(heightFtInput.value);
          const inch = parseFloat(heightInInput.value);
          const lb = parseFloat(weightLbInput.value);

          if (!isFinite(ft) && !isFinite(inch)) hCm = NaN;
          else {
            const totalInches =
              (isFinite(ft) ? ft : 0) * 12 + (isFinite(inch) ? inch : 0);
            hCm = totalInches * 2.54;
          }
          wKg = isFinite(lb) ? lb * 0.45359237 : NaN;
        }
        return { hCm, wKg };
      }

      function validateInputs(hCm, wKg) {
        if (!isFinite(hCm) || !isFinite(wKg) || hCm <= 0 || wKg <= 0)
          return false;
        if (hCm < 30 || hCm > 260) return false;
        if (wKg < 1 || wKg > 350) return false;
        return true;
      }

      function calcMosteller(h, w) {
        return Math.sqrt((h * w) / 3600);
      }
      function calcDuBois(h, w) {
        return 0.007184 * Math.pow(h, 0.725) * Math.pow(w, 0.425);
      }
      function calcHaycock(h, w) {
        return 0.024265 * Math.pow(h, 0.3964) * Math.pow(w, 0.5378);
      }
      function calcBoyd(h, w) {
        const W = w;
        const exponent = 0.7285 - 0.0188 * Math.log10(1000 * W);
        return 0.0003207 * Math.pow(h, 0.3) * Math.pow(1000 * W, exponent);
      }
      function calcGehan(h, w) {
        return 0.0235 * Math.pow(h, 0.42246) * Math.pow(w, 0.51456);
      }

      function formatBSA(x) {
        if (!isFinite(x)) return "–";
        return x.toFixed(2);
      }

      function buildResultsTable(values) {
        const { mosteller, dubois, haycock, boyd, gehan } = values;
        const avg =
          [mosteller, dubois, haycock, boyd, gehan]
            .filter((v) => isFinite(v))
            .reduce((a, b) => a + b, 0) / 5;

        return `
      <div class="overflow-x-auto">
        <table class="min-w-full text-sm border border-gray-200 rounded-md overflow-hidden">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-3 py-2 text-left font-semibold text-gray-700">Formula</th>
              <th class="px-3 py-2 text-left font-semibold text-gray-700">BSA (m²)</th>
              <th class="px-3 py-2 text-left font-semibold text-gray-700">Notes</th>
            </tr>
          </thead>
          <tbody>
            <tr class="border-t">
              <td class="px-3 py-2 font-medium text-gray-800">
                Mosteller
                <span class="badge bg-blue-100 text-blue-700 ml-1">Default</span>
              </td>
              <td class="px-3 py-2">${formatBSA(mosteller)}</td>
              <td class="px-3 py-2 text-gray-600">Simple and widely used in clinical practice.</td>
            </tr>
            <tr class="border-t">
              <td class="px-3 py-2 font-medium text-gray-800">Du Bois &amp; Du Bois</td>
              <td class="px-3 py-2">${formatBSA(dubois)}</td>
              <td class="px-3 py-2 text-gray-600">Historical reference formula.</td>
            </tr>
            <tr class="border-t">
              <td class="px-3 py-2 font-medium text-gray-800">Haycock</td>
              <td class="px-3 py-2">${formatBSA(haycock)}</td>
              <td class="px-3 py-2 text-gray-600">Performs well in children and adults.</td>
            </tr>
            <tr class="border-t">
              <td class="px-3 py-2 font-medium text-gray-800">Boyd</td>
              <td class="px-3 py-2">${formatBSA(boyd)}</td>
              <td class="px-3 py-2 text-gray-600">Adjusts for body weight; useful at size extremes.</td>
            </tr>
            <tr class="border-t">
              <td class="px-3 py-2 font-medium text-gray-800">Gehan–George</td>
              <td class="px-3 py-2">${formatBSA(gehan)}</td>
              <td class="px-3 py-2 text-gray-600">Alternative validated in adults and children.</td>
            </tr>
            <tr class="border-t bg-gray-50">
              <td class="px-3 py-2 font-semibold text-gray-900">Average (all formulas)</td>
              <td class="px-3 py-2 font-semibold text-gray-900">${formatBSA(
                avg
              )}</td>
              <td class="px-3 py-2 text-gray-600">Simple average of all five formulas.</td>
            </tr>
          </tbody>
        </table>
      </div>
    `;
      }

      function updateInterpretation(bsa, age, sex) {
        if (!isFinite(bsa)) return;

        let rangeText =
          "Typical adult BSA is around 1.6–1.9 m² for women and 1.8–2.1 m² for men.";
        if (age !== null && age < 18) {
          rangeText =
            "In children, BSA varies widely with age and growth; compare with pediatric growth charts and dosing guidelines.";
        }

        let sexText = "";
        if (sex === "female") {
          sexText = "For adult women, values around 1.6–1.9 m² are common.";
        } else if (sex === "male") {
          sexText = "For adult men, values around 1.8–2.1 m² are common.";
        }

        interpretationBox.innerHTML = `
      <p><strong>Estimated BSA (Mosteller):</strong> ${formatBSA(bsa)} m²</p>
      <p class="mt-1">${rangeText}</p>
      ${sexText ? `<p class="mt-1">${sexText}</p>` : ""}
      <p class="mt-1 text-gray-700">Always interpret BSA in clinical context and follow local dosing protocols.</p>
    `;
      }

      calculateBtn.addEventListener("click", () => {
        const { hCm, wKg } = toMetric();
        if (!validateInputs(hCm, wKg)) {
          errorEl.classList.remove("hidden");
          resultsContainer.innerHTML = `
        <div class="p-4 rounded-md border border-red-200 bg-red-50 text-sm text-red-700">
          Please enter realistic height and weight values. Height should be between 30–260 cm and weight between 1–350 kg (or equivalent in imperial units).
        </div>
      `;
          return;
        }
        errorEl.classList.add("hidden");

        const mosteller = calcMosteller(hCm, wKg);
        const dubois = calcDuBois(hCm, wKg);
        const haycock = calcHaycock(hCm, wKg);
        const boyd = calcBoyd(hCm, wKg);
        const gehan = calcGehan(hCm, wKg);

        resultsContainer.innerHTML = buildResultsTable({
          mosteller,
          dubois,
          haycock,
          boyd,
          gehan,
        });

        const ageVal = document.getElementById("age").value.trim();
        const age = ageVal === "" ? null : parseInt(ageVal, 10);
        const sexInput = document.querySelector('input[name="sex"]:checked');
        const sex = sexInput ? sexInput.value || "" : "";

        updateInterpretation(mosteller, age, sex);
      });

      resetBtn.addEventListener("click", () => {
        heightCmInput.value = "";
        heightFtInput.value = "";
        heightInInput.value = "";
        weightKgInput.value = "";
        weightLbInput.value = "";
        document.getElementById("age").value = "";
        const sexInputs = document.querySelectorAll('input[name="sex"]');
        sexInputs.forEach((el, idx) => {
          el.checked = idx === sexInputs.length - 1;
        });

        errorEl.classList.add("hidden");
        resultsContainer.innerHTML = `
      <div class="p-4 rounded-md border border-dashed border-gray-300 text-gray-500 text-sm">
        Enter height and weight, then click <span class="font-semibold">Calculate BSA</span> to see results.
      </div>
    `;
        interpretationBox.innerHTML = `
      <p>BSA is usually reported in square meters (m²). Typical adult values:</p>
      <ul class="list-disc ml-5 mt-1">
        <li>Adult women: ~1.6–1.9 m²</li>
        <li>Adult men: ~1.8–2.1 m²</li>
      </ul>
      <p class="mt-1">Use BSA together with clinical judgement, not as a standalone diagnostic tool.</p>
    `;
      });
    </script>

