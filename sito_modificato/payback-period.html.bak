    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (!isFinite(value)) return "–";
        const abs = Math.abs(value);
        const options = {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: abs >= 1000 ? 0 : 2,
        };
        return new Intl.NumberFormat("en-US", options).format(value);
      }

      function formatYears(value) {
        if (!isFinite(value)) return "–";
        return value.toFixed(2) + " years";
      }

      function formatNumber(value, decimals = 2) {
        if (!isFinite(value)) return "–";
        return value.toFixed(decimals);
      }

      // Dynamic cash flow rows
      const cashFlowContainer = document.getElementById("cashFlowContainer");
      const addYearBtn = document.getElementById("addYearBtn");

      function createCashFlowRow(year, value = "") {
        const row = document.createElement("div");
        row.className = "flex items-center gap-2";
        row.dataset.year = year;

        row.innerHTML = `
      <div class="w-20">
        <label class="block text-xs text-gray-500 mb-0.5">Year</label>
        <input type="number" class="w-full px-2 py-1 border border-gray-300 rounded-md bg-gray-50 text-sm" value="${year}" disabled>
      </div>
      <div class="flex-1">
        <label class="block text-xs text-gray-500 mb-0.5">Net cash flow</label>
        <div class="flex rounded-md shadow-sm">
          <span class="inline-flex items-center px-2 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-xs">$</span>
          <input type="number" class="cash-flow-input flex-1 min-w-0 block w-full px-2 py-1 border border-gray-300 rounded-r-md focus:ring-blue-500 focus:border-blue-500 text-sm" step="0.01" value="${value}">
        </div>
      </div>
      <button type="button" class="remove-year-btn text-xs text-red-600 hover:text-red-800 mt-5" aria-label="Remove year ${year}">Remove</button>
    `;
        return row;
      }

      function initDefaultRows() {
        cashFlowContainer.innerHTML = "";
        for (let y = 1; y <= 5; y++) {
          cashFlowContainer.appendChild(
            createCashFlowRow(y, y <= 3 ? 40000 : 30000)
          );
        }
      }

      addYearBtn.addEventListener("click", () => {
        const rows = cashFlowContainer.querySelectorAll("[data-year]");
        const nextYear = rows.length
          ? parseInt(rows[rows.length - 1].dataset.year, 10) + 1
          : 1;
        cashFlowContainer.appendChild(createCashFlowRow(nextYear));
      });

      cashFlowContainer.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-year-btn")) {
          const row = e.target.closest("[data-year]");
          row?.remove();
          // Re-number remaining years
          const rows = cashFlowContainer.querySelectorAll("[data-year]");
          rows.forEach((r, idx) => {
            const year = idx + 1;
            r.dataset.year = year;
            const yearInput = r.querySelector("input[disabled]");
            if (yearInput) yearInput.value = year;
            const btn = r.querySelector(".remove-year-btn");
            if (btn) btn.setAttribute("aria-label", "Remove year " + year);
          });
        }
      });

      // Calculation logic
      const calculateBtn = document.getElementById("calculateBtn");
      const resetBtn = document.getElementById("resetBtn");
      const inputError = document.getElementById("inputError");

      const simplePaybackEl = document.getElementById("simplePayback");
      const simplePaybackNoteEl = document.getElementById("simplePaybackNote");
      const discountedPaybackEl = document.getElementById("discountedPayback");
      const discountedPaybackNoteEl = document.getElementById(
        "discountedPaybackNote"
      );
      const totalUndiscountedEl = document.getElementById("totalUndiscounted");
      const npvResultEl = document.getElementById("npvResult");
      const piResultEl = document.getElementById("piResult");
      const cashFlowTableBody = document.getElementById("cashFlowTableBody");

      function calculatePayback() {
        inputError.classList.add("hidden");

        const initialInvestmentInput =
          document.getElementById("initialInvestment");
        const discountRateInput = document.getElementById("discountRate");

        const I0 = parseFloat(initialInvestmentInput.value);
        const r = parseFloat(discountRateInput.value) / 100 || 0;

        const cashFlowInputs = Array.from(
          document.querySelectorAll(".cash-flow-input")
        );
        const cashFlows = cashFlowInputs.map(
          (input) => parseFloat(input.value) || 0
        );

        // Basic validation
        if (!I0 || I0 <= 0 || cashFlows.every((v) => v === 0)) {
          inputError.classList.remove("hidden");
          initialInvestmentInput.classList.toggle(
            "input-error",
            !I0 || I0 <= 0
          );
          cashFlowInputs.forEach((inp) =>
            inp.classList.toggle(
              "input-error",
              cashFlows.every((v) => v === 0)
            )
          );
          return;
        } else {
          initialInvestmentInput.classList.remove("input-error");
          cashFlowInputs.forEach((inp) => inp.classList.remove("input-error"));
        }

        const n = cashFlows.length;
        let cumulative = -I0;
        let cumulativeDiscounted = -I0;
        let simplePayback = null;
        let discountedPayback = null;

        let totalUndiscounted = -I0;
        let pvInflows = 0;

        const rowsData = [];

        for (let t = 1; t <= n; t++) {
          const cf = cashFlows[t - 1];
          totalUndiscounted += cf;

          cumulative += cf;
          const dcf = r > 0 ? cf / Math.pow(1 + r, t) : cf;
          cumulativeDiscounted += dcf;
          if (r > 0) pvInflows += dcf;

          // Simple payback interpolation
          if (simplePayback === null && cumulative >= 0) {
            const prevCum = cumulative - cf;
            if (cf !== 0) {
              const fraction = Math.abs(prevCum) / Math.abs(cf);
              simplePayback = t - 1 + fraction;
            } else {
              simplePayback = t;
            }
          }

          // Discounted payback interpolation
          if (
            r > 0 &&
            discountedPayback === null &&
            cumulativeDiscounted >= 0
          ) {
            const prevCumD = cumulativeDiscounted - dcf;
            if (dcf !== 0) {
              const fractionD = Math.abs(prevCumD) / Math.abs(dcf);
              discountedPayback = t - 1 + fractionD;
            } else {
              discountedPayback = t;
            }
          }

          rowsData.push({
            year: t,
            cf,
            cumulative,
            dcf: r > 0 ? dcf : null,
            cumulativeDiscounted: r > 0 ? cumulativeDiscounted : null,
          });
        }

        const npv = r > 0 ? -I0 + pvInflows : null;
        const pi = r > 0 && I0 > 0 ? pvInflows / I0 : null;

        // Update summary
        simplePaybackEl.textContent =
          simplePayback !== null
            ? formatYears(simplePayback)
            : "No payback within horizon";
        simplePaybackNoteEl.textContent =
          simplePayback !== null
            ? "Time until cumulative cash flow turns positive."
            : "Cumulative cash flow never recovers the initial investment in the entered years.";

        if (r > 0) {
          discountedPaybackEl.textContent =
            discountedPayback !== null
              ? formatYears(discountedPayback)
              : "No payback within horizon";
          discountedPaybackNoteEl.textContent =
            discountedPayback !== null
              ? "Time until cumulative discounted cash flow turns positive."
              : "Discounted cash flows never recover the initial investment in the entered years.";
        } else {
          discountedPaybackEl.textContent = "–";
          discountedPaybackNoteEl.textContent =
            "Enter a positive discount rate to compute discounted payback.";
        }

        totalUndiscountedEl.textContent = formatCurrency(totalUndiscounted);
        npvResultEl.textContent = npv !== null ? formatCurrency(npv) : "–";
        piResultEl.textContent = pi !== null ? formatNumber(pi, 3) : "–";

        // Build table
        cashFlowTableBody.innerHTML = "";
        rowsData.forEach((row) => {
          const tr = document.createElement("div");
          tr.className =
            "grid grid-cols-2 md:grid-cols-6 px-3 py-2 text-xs md:text-sm items-center";

          const recoveredSimple =
            row.cumulative >= 0 &&
            simplePayback !== null &&
            row.year >= Math.floor(simplePayback);
          const recoveredDisc =
            r > 0 &&
            row.cumulativeDiscounted !== null &&
            row.cumulativeDiscounted >= 0 &&
            discountedPayback !== null &&
            row.year >= Math.floor(discountedPayback);
          const recoveredLabel =
            recoveredSimple || recoveredDisc ? "Reached" : "";

          tr.innerHTML = `
        <div class="font-medium text-gray-700">Year ${row.year}</div>
        <div class="text-right md:text-right">${formatCurrency(row.cf)}</div>
        <div class="hidden md:block text-right">${formatCurrency(
          row.cumulative
        )}</div>
        <div class="hidden md:block text-right">${
          row.dcf !== null ? formatCurrency(row.dcf) : "–"
        }</div>
        <div class="hidden md:block text-right">${
          row.cumulativeDiscounted !== null
            ? formatCurrency(row.cumulativeDiscounted)
            : "–"
        }</div>
        <div class="hidden md:block text-right text-emerald-700 font-semibold">${recoveredLabel}</div>
      `;

          cashFlowTableBody.appendChild(tr);
        });
      }

      calculateBtn.addEventListener("click", calculatePayback);

      resetBtn.addEventListener("click", () => {
        document.getElementById("initialInvestment").value = "";
        document.getElementById("discountRate").value = "";
        initDefaultRows();
        inputError.classList.add("hidden");

        simplePaybackEl.textContent = "–";
        simplePaybackNoteEl.textContent = "Waiting for input…";
        discountedPaybackEl.textContent = "–";
        discountedPaybackNoteEl.textContent =
          "Requires a positive discount rate.";
        totalUndiscountedEl.textContent = "–";
        npvResultEl.textContent = "–";
        piResultEl.textContent = "–";
        cashFlowTableBody.innerHTML = "";
      });

      // Initialize defaults on load
      document.addEventListener("DOMContentLoaded", () => {
        initDefaultRows();
        document.getElementById("initialInvestment").value = 100000;
        document.getElementById("discountRate").value = 8;
