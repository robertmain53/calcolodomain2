    <script>
      // Tab switching
      const tabFromLoan = document.getElementById("tab-from-loan");
      const tabFromRate = document.getElementById("tab-from-rate");
      const panelFromLoan = document.getElementById("panel-from-loan");
      const panelFromRate = document.getElementById("panel-from-rate");

      function activateTab(tab) {
        if (tab === "loan") {
          tabFromLoan.classList.add("tab-active");
          tabFromLoan.classList.remove("tab-inactive");
          tabFromRate.classList.add("tab-inactive");
          tabFromRate.classList.remove("tab-active");
          panelFromLoan.classList.remove("hidden");
          panelFromRate.classList.add("hidden");
        } else {
          tabFromRate.classList.add("tab-active");
          tabFromRate.classList.remove("tab-inactive");
          tabFromLoan.classList.add("tab-inactive");
          tabFromLoan.classList.remove("tab-active");
          panelFromRate.classList.remove("hidden");
          panelFromLoan.classList.add("hidden");
        }
      }

      tabFromLoan.addEventListener("click", () => activateTab("loan"));
      tabFromRate.addEventListener("click", () => activateTab("rate"));

      // Utility: format currency and percent
      function fmtCurrency(value) {
        if (!isFinite(value)) return "–";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }
      function fmtPercent(value) {
        if (!isFinite(value)) return "–";
        return (
          (value * 100).toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 3,
          }) + "%"
        );
      }

      // APR from loan details
      document.getElementById("btn-calc-apr").addEventListener("click", () => {
        const amount = parseFloat(document.getElementById("loan-amount").value);
        const years = parseFloat(
          document.getElementById("loan-term-years").value
        );
        const nominalRate =
          parseFloat(document.getElementById("loan-rate").value) / 100;
        const freq = parseInt(
          document.getElementById("payment-frequency").value,
          10
        );
        const upfrontFees =
          parseFloat(document.getElementById("upfront-fees").value) || 0;
        const upfrontCash =
          parseFloat(document.getElementById("upfront-paid-cash").value) || 0;
        const monthlyFees =
          parseFloat(document.getElementById("monthly-fees").value) || 0;

        const errorEl = document.getElementById("apr-error");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        if (!(amount > 0) || !(years > 0) || !(nominalRate >= 0)) {
          errorEl.textContent =
            "Please enter a positive loan amount, term, and interest rate.";
          errorEl.classList.remove("hidden");
          return;
        }

        const nPeriods = Math.round(years * freq);
        const periodRate = nominalRate / freq;

        // Payment for principal + interest (standard annuity formula)
        let payment;
        if (periodRate === 0) {
          payment = (amount + upfrontFees) / nPeriods;
        } else {
          const factor = Math.pow(1 + periodRate, nPeriods);
          payment =
            ((amount + upfrontFees) * periodRate * factor) / (factor - 1);
        }

        // Build cash flows: time 0 is net received, then negative payments+fees
        const netReceived = amount - upfrontCash;
        const cashFlows = [netReceived];
        let balance = amount + upfrontFees;
        const amortBody = document.getElementById("amortization-body");
        amortBody.innerHTML = "";

        let totalPaid = upfrontCash; // include cash fees
        for (let k = 1; k <= nPeriods; k++) {
          const interest = balance * periodRate;
          let principal = payment - interest;
          if (k === nPeriods) {
            // Adjust last payment to clear balance
            principal = balance;
          }
          balance = Math.max(0, balance - principal);
          const fees = freq === 12 ? monthlyFees : (monthlyFees * 12) / freq; // approximate scaling
          const totalOut = payment + fees;
          cashFlows.push(-totalOut);
          totalPaid += totalOut;

          if (k <= 360) {
            // limit rows for performance
            const row = document.createElement("tr");
            row.innerHTML = `
          <td class="px-2 py-1 text-gray-700">${k}</td>
          <td class="px-2 py-1 text-right">${fmtCurrency(totalOut)}</td>
          <td class="px-2 py-1 text-right">${fmtCurrency(interest)}</td>
          <td class="px-2 py-1 text-right">${fmtCurrency(principal)}</td>
          <td class="px-2 py-1 text-right">${fmtCurrency(fees)}</td>
          <td class="px-2 py-1 text-right">${fmtCurrency(balance)}</td>
        `;
            amortBody.appendChild(row);
          }
        }

        // IRR via Newton-Raphson on periodic rate
        function npv(rate) {
          let v = 0;
          for (let t = 0; t < cashFlows.length; t++) {
            v += cashFlows[t] / Math.pow(1 + rate, t);
          }
          return v;
        }
        function dNpv(rate) {
          let v = 0;
          for (let t = 1; t < cashFlows.length; t++) {
            v += (-t * cashFlows[t]) / Math.pow(1 + rate, t + 1);
          }
          return v;
        }

        let r = periodRate || 0.1 / freq;
        let success = false;
        for (let i = 0; i < 100; i++) {
          const f = npv(r);
          const df = dNpv(r);
          if (Math.abs(df) < 1e-12) break;
          const rNext = r - f / df;
          if (!isFinite(rNext) || rNext <= -0.9999) break;
          if (Math.abs(rNext - r) < 1e-10) {
            r = rNext;
            success = true;
            break;
          }
          r = rNext;
        }

        if (!success || !isFinite(r) || r <= -0.9999) {
          errorEl.textContent =
            "Unable to compute APR for these inputs. Try reducing fees or adjusting the term.";
          errorEl.classList.remove("hidden");
          return;
        }

        const effectiveAPR = Math.pow(1 + r, freq) - 1;

        document.getElementById("apr-value").textContent =
          fmtPercent(effectiveAPR);
        document.getElementById("payment-value").textContent =
          fmtCurrency(payment);
        document.getElementById("net-received").textContent =
          fmtCurrency(netReceived);
        document.getElementById("total-paid").textContent =
          fmtCurrency(totalPaid);
        document.getElementById("total-cost").textContent = fmtCurrency(
          totalPaid - netReceived
        );

        document.getElementById("apr-results").classList.remove("hidden");
      });

      // APR from nominal rate & compounding
      document
        .getElementById("btn-calc-effective")
        .addEventListener("click", () => {
          const nominal =
            parseFloat(document.getElementById("nominal-rate").value) / 100;
          const m = parseInt(document.getElementById("compounding").value, 10);
          const errorEl = document.getElementById("effective-error");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          if (!(nominal >= 0) || !(m > 0)) {
            errorEl.textContent =
              "Please enter a valid nominal rate and compounding frequency.";
            errorEl.classList.remove("hidden");
            return;
          }

          const eff = Math.pow(1 + nominal / m, m) - 1;
          document.getElementById("effective-apr").textContent =
            fmtPercent(eff);
        });

      document
        .getElementById("btn-calc-nominal-from-effective")
        .addEventListener("click", () => {
          const effInput =
            parseFloat(document.getElementById("nominal-rate").value) / 100;
          const m = parseInt(document.getElementById("compounding").value, 10);
          const errorEl = document.getElementById("effective-error");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          if (!(effInput >= 0) || !(m > 0)) {
            errorEl.textContent =
              "Please enter a valid APR and compounding frequency.";
            errorEl.classList.remove("hidden");
            return;
          }

          const nominal = m * (Math.pow(1 + effInput, 1 / m) - 1);
          document.getElementById("nominal-from-apr").textContent =
            fmtPercent(nominal);
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
