    <script>
      function fmtMoney(x) {
        if (isNaN(x)) return "$0";
        const sign = x < 0 ? "-" : "";
        const v = Math.abs(x);
        return (
          sign + "$" + v.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }
      function fmtPct(x) {
        if (!isFinite(x)) return "–";
        return x.toFixed(1) + "%";
      }
      function safeNum(id) {
        const v = parseFloat(document.getElementById(id).value);
        return isNaN(v) ? 0 : v;
      }

      function calculatePeckingOrder() {
        const investment = safeNum("investmentAmount");
        const internalFunds = safeNum("internalFunds");
        const issueDebt = safeNum("issueCostDebt") / 100;
        const issueEquity = safeNum("issueCostEquity") / 100;

        const currentDebt = safeNum("currentDebt");
        const currentEquity = safeNum("currentEquity");
        const maxDE = safeNum("maxDebtToEquity");
        const hardDebtCap = safeNum("hardDebtCap");
        const allowEquity = document.getElementById("allowEquity").checked;

        if (investment <= 0) {
          alert("Please enter a positive required investment.");
          return;
        }

        // Step 1: internal funds
        const internalUsed = Math.min(investment, Math.max(0, internalFunds));
        let remaining1 = investment - internalUsed;

        // Pre-financing D/E
        const preDE = currentEquity > 0 ? currentDebt / currentEquity : NaN;

        // Step 2: debt capacity
        let deltaDmax = Infinity;
        if (maxDE > 0 && currentEquity > 0) {
          const targetMaxDebt = maxDE * currentEquity;
          deltaDmax = Math.max(0, targetMaxDebt - currentDebt);
        }
        let newDebtMax = isFinite(deltaDmax) ? deltaDmax : remaining1;
        if (hardDebtCap > 0) {
          newDebtMax = Math.min(newDebtMax, hardDebtCap);
        }
        newDebtMax = Math.max(0, newDebtMax);

        const debtUsed = Math.min(remaining1, newDebtMax);
        let remaining2 = remaining1 - debtUsed;

        // Step 3: equity
        let equityUsed = 0;
        let fundingGap = 0;
        if (remaining2 > 0) {
          if (allowEquity) {
            equityUsed = remaining2;
            remaining2 = 0;
          } else {
            fundingGap = remaining2;
          }
        }

        const totalFinanced = internalUsed + debtUsed + equityUsed;

        // Post-financing D/E
        const postDebt = currentDebt + debtUsed;
        const postEquity = currentEquity + equityUsed;
        const postDE = postEquity > 0 ? postDebt / postEquity : NaN;

        // Update UI
        const pctInternal = (internalUsed / investment) * 100;
        const pctDebt = (debtUsed / investment) * 100;
        const pctEquity = (equityUsed / investment) * 100;

        document.getElementById("resInternalUsed").textContent =
          fmtMoney(internalUsed);
        document.getElementById("resDebtUsed").textContent = fmtMoney(debtUsed);
        document.getElementById("resEquityUsed").textContent =
          fmtMoney(equityUsed);

        document.getElementById("resInternalPct").textContent =
          fmtPct(pctInternal) + " of investment";
        document.getElementById("resDebtPct").textContent =
          fmtPct(pctDebt) + " of investment";
        document.getElementById("resEquityPct").textContent =
          fmtPct(pctEquity) + " of investment";

        document.getElementById("resTotalFinanced").textContent =
          fmtMoney(totalFinanced);
        document.getElementById("resFundingGap").textContent =
          fmtMoney(fundingGap);

        const coverageNote =
          fundingGap > 0
            ? "Constraints prevent full financing; consider relaxing the debt cap or allowing equity."
            : "The entire investment is financed following the pecking order (internal funds → debt → equity).";
        document.getElementById("resCoverageNote").textContent = coverageNote;

        document.getElementById("resPreDE").textContent = isNaN(preDE)
          ? "–"
          : preDE.toFixed(2);
        document.getElementById("resPostDE").textContent = isNaN(postDE)
          ? "–"
          : postDE.toFixed(2);

        let leverageNote = "";
        if (!isNaN(postDE) && maxDE > 0) {
          if (postDE > maxDE + 1e-6) {
            leverageNote =
              "Warning: Post-financing D/E exceeds your maximum target. You may be over-levered.";
          } else if (postDE > 0.9 * maxDE) {
            leverageNote =
              "Post-financing D/E is close to your maximum target. Limited additional debt capacity remains.";
          } else {
            leverageNote =
              "Post-financing D/E remains comfortably within your target range.";
          }
        }
        document.getElementById("resLeverageNote").textContent = leverageNote;

        // Narrative
        let narrative = `You need to finance ${fmtMoney(investment)}. `;
        narrative += `Following pecking order theory, the calculator first uses internal funds, then debt, and finally equity (if allowed).\n\n`;

        narrative += `Step 1 – Internal funds: ${fmtMoney(
          internalUsed
        )} (${fmtPct(
          pctInternal
        )} of the investment) are covered by internal funds. `;
        if (internalUsed < investment) {
          narrative += `This leaves ${fmtMoney(
            investment - internalUsed
          )} to be financed externally. `;
        } else {
          narrative += `No external financing is required. `;
        }

        if (investment - internalUsed > 0) {
          narrative += `\n\nStep 2 – Debt: Based on your current D/E and constraints, the model allocates ${fmtMoney(
            debtUsed
          )} to new debt. `;
          if (
            debtUsed === newDebtMax &&
            (hardDebtCap > 0 || isFinite(deltaDmax))
          ) {
            narrative += `This amount is limited by your specified debt capacity (target D/E and/or hard cap). `;
          }
        }

        if (equityUsed > 0) {
          narrative += `\n\nStep 3 – Equity: The remaining ${fmtMoney(
            equityUsed
          )} is financed with new equity as a last resort. `;
        } else if (fundingGap > 0 && !allowEquity) {
          narrative += `\n\nEquity issuance is disabled, so there is an unfunded gap of ${fmtMoney(
            fundingGap
          )}. `;
        }

        if (!isNaN(postDE)) {
          narrative += `\n\nCapital structure: your D/E ratio moves from ${
            isNaN(preDE) ? "n/a" : preDE.toFixed(2)
          } to ${postDE.toFixed(2)} after financing.`;
        }

        // Issue cost note
        const debtIssueCost = debtUsed * issueDebt;
        const equityIssueCost = equityUsed * issueEquity;
        if (debtIssueCost > 0 || equityIssueCost > 0) {
          narrative += `\n\nApproximate issuance costs: about ${fmtMoney(
            debtIssueCost
          )} for debt and ${fmtMoney(equityIssueCost)} for equity, `;
          narrative += `highlighting why internal funds are preferred whenever available.`;
        }

        document.getElementById("resNarrative").textContent = narrative;
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculatePeckingOrder);
      window.addEventListener("load", calculatePeckingOrder);
    </script>

