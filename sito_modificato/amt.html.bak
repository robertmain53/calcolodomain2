    <script>
      // Approximate AMT parameters for 2023–2024 (illustrative, not official)
      const AMT_PARAMS = {
        2024: {
          exemption: {
            single: 85300,
            mfj: 133300,
            mfs: 66650,
            hoh: 85300,
          },
          phaseoutStart: {
            single: 609350,
            mfj: 1015570,
            mfs: 507785,
            hoh: 609350,
          },
          rateThreshold: 232600, // where 28% rate begins
        },
        2023: {
          exemption: {
            single: 81400,
            mfj: 126500,
            mfs: 63250,
            hoh: 81400,
          },
          phaseoutStart: {
            single: 578150,
            mfj: 1156300,
            mfs: 578150,
            hoh: 578150,
          },
          rateThreshold: 220700,
        },
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }

      function calculateAMT() {
        const year = document.getElementById("tax-year").value;
        const status = document.getElementById("filing-status").value;
        const params = AMT_PARAMS[year];

        const taxableIncome = getNumber("taxable-income");
        const adjustments = getNumber("amt-adjustments");
        const regularTax = getNumber("regular-tax");
        const amtCredits = getNumber("amt-credits");

        const errorEl = document.getElementById("calc-error");
        if (taxableIncome <= 0 || regularTax < 0) {
          errorEl.classList.remove("hidden");
          return;
        } else {
          errorEl.classList.add("hidden");
        }

        // Step 1: AMTI
        const amti = taxableIncome + adjustments;

        // Step 2: Exemption with phase-out
        let exemption = params.exemption[status] || 0;
        const phaseStart = params.phaseoutStart[status] || 0;
        if (amti > phaseStart) {
          const reduction = 0.25 * (amti - phaseStart);
          exemption = Math.max(0, exemption - reduction);
        }

        // Step 3: AMT base
        const amtBase = Math.max(0, amti - exemption);

        // Step 4: Tentative minimum tax using 26% / 28%
        const threshold = params.rateThreshold;
        const amt26Base = Math.min(amtBase, threshold);
        const amt28Base = Math.max(0, amtBase - threshold);
        const amt26 = 0.26 * amt26Base;
        const amt28 = 0.28 * amt28Base;
        const tentativeMinTax = amt26 + amt28;

        // Step 5: Compare with regular tax
        const adjustedRegularTax = Math.max(0, regularTax - amtCredits);
        const amtDue = Math.max(0, tentativeMinTax - adjustedRegularTax);
        const totalTaxIfAmt = adjustedRegularTax + amtDue;

        // Update outputs
        document.getElementById("out-taxable-income").textContent =
          formatMoney(taxableIncome);
        document.getElementById("out-amt-adjustments").textContent =
          formatMoney(adjustments);
        document.getElementById("out-amti").textContent = formatMoney(amti);
        document.getElementById("out-exemption").textContent =
          formatMoney(exemption);
        document.getElementById("out-amt-base").textContent =
          formatMoney(amtBase);
        document.getElementById("out-amt-26").textContent = formatMoney(amt26);
        document.getElementById("out-amt-28").textContent = formatMoney(amt28);
        document.getElementById("out-tmt").textContent =
          formatMoney(tentativeMinTax);
        document.getElementById("out-regular-tax").textContent =
          formatMoney(regularTax);
        document.getElementById("out-amt-credits").textContent =
          formatMoney(amtCredits);
        document.getElementById("out-amt-due-detail").textContent =
          formatMoney(amtDue);

        document.getElementById("amt-due").textContent = formatMoney(amtDue);
        document.getElementById("total-tax-if-amt").textContent =
          formatMoney(totalTaxIfAmt);

        const statusText = document.getElementById("amt-status");
        const badge = document.getElementById("amt-status-badge");

        if (amtDue > 0) {
          statusText.textContent = "You may owe Alternative Minimum Tax.";
          badge.textContent = "AMT applies (estimate)";
          badge.className = "result-badge bg-red-100 text-red-700";
        } else {
          statusText.textContent = "No AMT estimated based on your inputs.";
          badge.textContent = "No AMT (estimate)";
          badge.className = "result-badge bg-green-100 text-green-700";
        }
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateAMT);

      document.getElementById("reset-btn").addEventListener("click", () => {
        [
          "taxable-income",
          "amt-adjustments",
          "regular-tax",
          "amt-credits",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        document.getElementById("amt-status").textContent = "Awaiting input…";
        const badge = document.getElementById("amt-status-badge");
        badge.textContent = "No calculation yet";
        badge.className = "result-badge bg-gray-200 text-gray-700";

        [
          "amt-due",
          "total-tax-if-amt",
          "out-taxable-income",
          "out-amt-adjustments",
          "out-amti",
          "out-exemption",
          "out-amt-base",
          "out-amt-26",
          "out-amt-28",
          "out-tmt",
          "out-regular-tax",
          "out-amt-credits",
          "out-amt-due-detail",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.textContent = "$0";
        });

        document.getElementById("calc-error").classList.add("hidden");
      });
    </script>

