    <script>
      // State
      let currentUnits = "metric";
      let currentSex = "male";
      let currentGoal = "loss";
      let currentStyle = "low";

      const stylePresets = {
        "very-low": {
          factor: 0.8,
          desc: "Very low-carb (often ketogenic). Typically 0.5–1.0 g/kg, often under 50 g/day.",
        },
        low: {
          factor: 2.0,
          desc: "Low-carb. Common for weight loss and blood sugar control, about 1–2.5 g/kg.",
        },
        moderate: {
          factor: 3.5,
          desc: "Moderate-carb. Suitable for many active people and balanced diets, about 3–4.5 g/kg.",
        },
        high: {
          factor: 5.0,
          desc: "High-carb. Often used by endurance athletes or very active individuals, about 4.5–7 g/kg.",
        },
      };

      function updateStyleUI() {
        document.querySelectorAll(".style-toggle").forEach((btn) => {
          if (btn.dataset.style === currentStyle) {
            btn.classList.add("bg-blue-50", "text-blue-700", "border-blue-200");
            btn.classList.remove("text-gray-700", "border-gray-300");
          } else {
            btn.classList.remove(
              "bg-blue-50",
              "text-blue-700",
              "border-blue-200"
            );
            btn.classList.add("text-gray-700", "border-gray-300");
          }
        });
        const preset = stylePresets[currentStyle];
        if (preset) {
          const carbPerKgInput = document.getElementById("carb-per-kg");
          if (document.activeElement !== carbPerKgInput) {
            carbPerKgInput.value = preset.factor.toFixed(1);
          }
          document.getElementById("style-description").textContent =
            preset.desc;
        }
      }

      function updateUnitUI() {
        document.querySelectorAll(".unit-toggle").forEach((btn) => {
          if (btn.dataset.units === currentUnits) {
            btn.classList.add("bg-blue-50", "text-blue-700");
          } else {
            btn.classList.remove("bg-blue-50", "text-blue-700");
          }
        });
        const metricHeight = document.getElementById("height-metric-group");
        const usHeight = document.getElementById("height-us-group");
        const metricWeight = document.getElementById("weight-metric-group");
        const usWeight = document.getElementById("weight-us-group");

        if (currentUnits === "metric") {
          metricHeight.classList.remove("hidden");
          metricWeight.classList.remove("hidden");
          usHeight.classList.add("hidden");
          usWeight.classList.add("hidden");
        } else {
          metricHeight.classList.add("hidden");
          metricWeight.classList.add("hidden");
          usHeight.classList.remove("hidden");
          usWeight.classList.remove("hidden");
        }
      }

      function updateSexUI() {
        document.querySelectorAll(".sex-toggle").forEach((btn) => {
          if (btn.dataset.sex === currentSex) {
            btn.classList.add("bg-blue-50", "text-blue-700");
          } else {
            btn.classList.remove("bg-blue-50", "text-blue-700");
          }
        });
      }

      function updateGoalUI() {
        document.querySelectorAll(".goal-toggle").forEach((btn) => {
          if (btn.dataset.goal === currentGoal) {
            btn.classList.add("bg-blue-50", "text-blue-700", "border-blue-200");
            btn.classList.remove("text-gray-700", "border-gray-300");
          } else {
            btn.classList.remove(
              "bg-blue-50",
              "text-blue-700",
              "border-blue-200"
            );
            btn.classList.add("text-gray-700", "border-gray-300");
          }
        });
      }

      function toKg(weightLb) {
        return weightLb / 2.2046226218;
      }

      function toCm(ft, inch) {
        return (ft * 12 + inch) * 2.54;
      }

      function mifflinStJeor(sex, age, heightCm, weightKg) {
        if (sex === "male") {
          return 10 * weightKg + 6.25 * heightCm - 5 * age + 5;
        } else {
          return 10 * weightKg + 6.25 * heightCm - 5 * age - 161;
        }
      }

      function formatNumber(num, decimals = 0) {
        return num.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: decimals,
        });
      }

      function determineCarbCategory(carbG) {
        if (carbG < 50) return "Very low‑carb (often ketogenic)";
        if (carbG < 130) return "Low‑carb";
        if (carbG <= 225) return "Moderate‑carb";
        return "High‑carb";
      }

      function showError(msg) {
        const el = document.getElementById("error-msg");
        el.textContent = msg;
        el.classList.remove("hidden");
      }

      function clearError() {
        const el = document.getElementById("error-msg");
        el.textContent = "";
        el.classList.add("hidden");
      }

      function calculate() {
        clearError();
        const age = parseInt(document.getElementById("age").value, 10);
        if (isNaN(age) || age < 14 || age > 100) {
          showError("Please enter a valid age between 14 and 100.");
          return;
        }

        let heightCm;
        if (currentUnits === "metric") {
          const h = parseFloat(document.getElementById("height-cm").value);
          if (isNaN(h) || h < 120 || h > 230) {
            showError("Please enter a valid height in cm.");
            return;
          }
          heightCm = h;
        } else {
          const ft = parseFloat(document.getElementById("height-ft").value);
          const inch = parseFloat(document.getElementById("height-in").value);
          if (
            isNaN(ft) ||
            isNaN(inch) ||
            ft < 4 ||
            ft > 7 ||
            inch < 0 ||
            inch >= 12
          ) {
            showError("Please enter a valid height in feet and inches.");
            return;
          }
          heightCm = toCm(ft, inch);
        }

        let weightKg;
        if (currentUnits === "metric") {
          const w = parseFloat(document.getElementById("weight-kg").value);
          if (isNaN(w) || w < 35 || w > 250) {
            showError("Please enter a valid weight in kg.");
            return;
          }
          weightKg = w;
        } else {
          const wlb = parseFloat(document.getElementById("weight-lb").value);
          if (isNaN(wlb) || wlb < 80 || wlb > 550) {
            showError("Please enter a valid weight in lb.");
            return;
          }
          weightKg = toKg(wlb);
        }

        let carbPerKg = parseFloat(
          document.getElementById("carb-per-kg").value
        );
        if (isNaN(carbPerKg) || carbPerKg <= 0 || carbPerKg > 10) {
          showError("Please enter a carb factor between 0.5 and 10 g/kg.");
          return;
        }

        const activityFactor = parseFloat(
          document.getElementById("activity").value
        );
        const bmr = mifflinStJeor(currentSex, age, heightCm, weightKg);
        const tdee = bmr * activityFactor;

        let delta;
        if (currentGoal === "loss") {
          delta = -0.2;
        } else if (currentGoal === "maintain") {
          delta = 0;
        } else {
          delta = 0.15;
        }
        const goalCalories = tdee * (1 + delta);

        const carbG = weightKg * carbPerKg;
        const carbKcal = carbG * 4;

        const meals3 = carbG / 3;
        const meals4 = carbG / 4;
        const meals5 = carbG / 5;

        document.getElementById("carb-grams").textContent = `${formatNumber(
          carbG,
          0
        )} g/day`;
        document.getElementById("carb-calories").textContent = `${formatNumber(
          carbKcal,
          0
        )} kcal/day`;
        document.getElementById(
          "carb-per-meal-3"
        ).textContent = `${formatNumber(meals3, 0)} g per meal`;
        document.getElementById(
          "carb-per-meal-4"
        ).textContent = `${formatNumber(meals4, 0)} g per meal`;
        document.getElementById(
          "carb-per-meal-5"
        ).textContent = `${formatNumber(meals5, 0)} g per meal`;

        document.getElementById("carb-category").textContent =
          determineCarbCategory(carbG);

        document.getElementById("bmr-output").textContent = `${formatNumber(
          bmr,
          0
        )} kcal/day`;
        document.getElementById("tdee-output").textContent = `${formatNumber(
          tdee,
          0
        )} kcal/day`;
        document.getElementById(
          "goal-cal-output"
        ).textContent = `${formatNumber(goalCalories, 0)} kcal/day`;

        document.getElementById("results-section").classList.remove("hidden");
        document
          .getElementById("results-section")
          .scrollIntoView({ behavior: "smooth", block: "start" });
      }

      // Event listeners
      document.addEventListener("DOMContentLoaded", () => {
        // Units
        document.querySelectorAll(".unit-toggle").forEach((btn) => {
          btn.addEventListener("click", () => {
            currentUnits = btn.dataset.units;
            updateUnitUI();
          });
        });

        // Sex
        document.querySelectorAll(".sex-toggle").forEach((btn) => {
          btn.addEventListener("click", () => {
            currentSex = btn.dataset.sex;
            updateSexUI();
          });
        });

        // Goal
        document.querySelectorAll(".goal-toggle").forEach((btn) => {
          btn.addEventListener("click", () => {
            currentGoal = btn.dataset.goal;
            updateGoalUI();
          });
        });

        // Style
        document.querySelectorAll(".style-toggle").forEach((btn) => {
          btn.addEventListener("click", () => {
            currentStyle = btn.dataset.style;
            updateStyleUI();
          });
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculate);

        // Initialize UI
        updateUnitUI();
        updateSexUI();
        updateGoalUI();
        updateStyleUI();
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const expanded = this.getAttribute("aria-expanded") === "true";
          this.setAttribute("aria-expanded", String(!expanded));
          menu.classList.toggle("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
