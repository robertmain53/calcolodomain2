      // Utility functions
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      function monthsToYearsMonths(months) {
        if (!isFinite(months) || months <= 0) return "0 months";
        const y = Math.floor(months / 12);
        const m = months % 12;
        const parts = [];
        if (y > 0) parts.push(y + " year" + (y > 1 ? "s" : ""));
        if (m > 0) parts.push(m + " month" + (m > 1 ? "s" : ""));
        return parts.join(" ");
      }

      // Debt row management
      const debtsBody = document.getElementById("debts-body");
      let debtIdCounter = 0;

      function createDebtRow(data = {}) {
        const tr = document.createElement("tr");
        tr.dataset.id = debtIdCounter++;
        tr.className = "border-t";

        tr.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border border-gray-300 rounded-md px-2 py-1 text-sm debt-name" placeholder="e.g. Card A" value="${
          data.name || ""
        }">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-28 border border-gray-300 rounded-md px-2 py-1 text-sm text-right debt-balance" value="${
          data.balance != null ? data.balance : ""
        }">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-24 border border-gray-300 rounded-md px-2 py-1 text-sm text-right debt-apr" value="${
          data.apr != null ? data.apr : ""
        }">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-28 border border-gray-300 rounded-md px-2 py-1 text-sm text-right debt-min" value="${
          data.min != null ? data.min : ""
        }">
      </td>
      <td class="px-3 py-2 text-right text-xs text-gray-500">
        fixed
      </td>
      <td class="px-3 py-2 text-center">
        <button type="button" class="text-red-600 text-xs remove-debt">Remove</button>
      </td>
    `;

        debtsBody.appendChild(tr);
      }

      function initDefaultRows() {
        if (debtsBody.children.length === 0) {
          createDebtRow({
            name: "Credit card 1",
            balance: 4500,
            apr: 22.99,
            min: 135,
          });
          createDebtRow({
            name: "Credit card 2",
            balance: 2800,
            apr: 18.49,
            min: 85,
          });
          createDebtRow({
            name: "Personal loan",
            balance: 6200,
            apr: 9.5,
            min: 190,
          });
        }
      }

      document
        .getElementById("add-debt")
        .addEventListener("click", () => createDebtRow());

      debtsBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-debt")) {
          const row = e.target.closest("tr");
          if (debtsBody.children.length > 1) {
            row.remove();
          }
        }
      });

      document.getElementById("load-example").addEventListener("click", () => {
        debtsBody.innerHTML = "";
        createDebtRow({ name: "Visa", balance: 5200, apr: 21.99, min: 160 });
        createDebtRow({
          name: "Mastercard",
          balance: 3100,
          apr: 18.9,
          min: 95,
        });
        createDebtRow({
          name: "Store card",
          balance: 900,
          apr: 24.99,
          min: 35,
        });
        createDebtRow({
          name: "Personal loan",
          balance: 6000,
          apr: 8.5,
          min: 185,
        });
        document.getElementById("monthly-budget").value = 900;
        document.getElementById("extra-payment").value = 100;
      });

      // Strategy tabs
      const tabAvalanche = document.getElementById("tab-avalanche");
      const tabSnowball = document.getElementById("tab-snowball");
      const tabCustom = document.getElementById("tab-custom");
      const customHint = document.getElementById("custom-hint");
      let currentStrategyTab = "avalanche";

      function setActiveTab(tab) {
        [tabAvalanche, tabSnowball, tabCustom].forEach((btn) => {
          btn.classList.remove("tab-active", "text-blue-600");
          btn.classList.add("text-gray-500");
        });
        tab.classList.add("tab-active", "text-blue-600");
        tab.classList.remove("text-gray-500");

        if (tab === tabAvalanche) currentStrategyTab = "avalanche";
        if (tab === tabSnowball) currentStrategyTab = "snowball";
        if (tab === tabCustom) currentStrategyTab = "custom";

        customHint.classList.toggle("hidden", currentStrategyTab !== "custom");
      }

      tabAvalanche.addEventListener("click", () => setActiveTab(tabAvalanche));
      tabSnowball.addEventListener("click", () => setActiveTab(tabSnowball));
      tabCustom.addEventListener("click", () => setActiveTab(tabCustom));

      // Drag & drop for custom order (simple implementation)
      let dragSrcEl = null;
      debtsBody.addEventListener("dragstart", (e) => {
        const row = e.target.closest("tr");
        if (!row || currentStrategyTab !== "custom") return;
        dragSrcEl = row;
        e.dataTransfer.effectAllowed = "move";
        row.style.opacity = "0.5";
      });

      debtsBody.addEventListener("dragend", (e) => {
        const row = e.target.closest("tr");
        if (row) row.style.opacity = "";
      });

      debtsBody.addEventListener("dragover", (e) => {
        if (currentStrategyTab !== "custom") return;
        e.preventDefault();
        e.dataTransfer.dropEffect = "move";
      });

      debtsBody.addEventListener("drop", (e) => {
        if (currentStrategyTab !== "custom") return;
        e.preventDefault();
        const targetRow = e.target.closest("tr");
        if (dragSrcEl && targetRow && dragSrcEl !== targetRow) {
          const rect = targetRow.getBoundingClientRect();
          const offset = e.clientY - rect.top;
          if (offset > rect.height / 2) {
            targetRow.after(dragSrcEl);
          } else {
            targetRow.before(dragSrcEl);
          }
        }
      });

      // Make rows draggable when in custom mode
      const observer = new MutationObserver(() => {
        Array.from(debtsBody.children).forEach((row) => {
          row.draggable = currentStrategyTab === "custom";
          row.classList.toggle("cursor-move", currentStrategyTab === "custom");
        });
      });
      observer.observe(debtsBody, { childList: true, subtree: true });

      // Core calculation
      function readDebts() {
        const rows = Array.from(debtsBody.querySelectorAll("tr"));
        const debts = [];
        let hasError = false;

        rows.forEach((row, index) => {
          const name =
            row.querySelector(".debt-name").value.trim() || `Debt ${index + 1}`;
          const balance = parseFloat(row.querySelector(".debt-balance").value);
          const apr = parseFloat(row.querySelector(".debt-apr").value);
          const min = parseFloat(row.querySelector(".debt-min").value);

          [".debt-balance", ".debt-apr", ".debt-min"].forEach((sel) => {
            row.querySelector(sel).classList.remove("input-error");
          });

          if (!isFinite(balance) || balance <= 0) {
            row.querySelector(".debt-balance").classList.add("input-error");
            hasError = true;
          }
          if (!isFinite(apr) || apr < 0) {
            row.querySelector(".debt-apr").classList.add("input-error");
            hasError = true;
          }
          if (!isFinite(min) || min <= 0) {
            row.querySelector(".debt-min").classList.add("input-error");
            hasError = true;
          }

          debts.push({ name, balance, apr, min, id: row.dataset.id });
        });

        if (hasError) return null;
        return debts;
      }

      function simulateStrategy(debtsInput, totalBudget, extra, mode) {
        // Deep copy debts
        const debts = debtsInput.map((d) => ({
          name: d.name,
          balance: d.balance,
          apr: d.apr,
          min: d.min,
          id: d.id,
        }));

        const schedule = [];
        let month = 0;
        let totalInterest = 0;
        const maxMonths = 360 * 2; // 30 years cap

        while (debts.some((d) => d.balance > 0.01) && month < maxMonths) {
          month++;
          let remainingBudget = totalBudget + extra;
          let monthInterest = 0;
          let monthPrincipal = 0;

          // Sort debts according to strategy
          let activeDebts = debts.filter((d) => d.balance > 0.01);
          if (mode === "avalanche") {
            activeDebts.sort((a, b) => b.apr - a.apr || a.balance - b.balance);
          } else if (mode === "snowball") {
            activeDebts.sort((a, b) => a.balance - b.balance || b.apr - a.apr);
          } else if (mode === "custom") {
            // Keep current DOM order: debtsInput is already in that order
            activeDebts = debts.filter((d) => d.balance > 0.01);
          }

          // First, ensure minimum payments
          for (const debt of activeDebts) {
            if (remainingBudget <= 0) break;
            const r = debt.apr / 100 / 12;
            const interest = debt.balance * r;
            const minPay = Math.min(debt.min, debt.balance + interest);
            const pay = Math.min(minPay, remainingBudget);

            const actualInterest = Math.min(interest, pay);
            const principal = pay - actualInterest;

            debt.balance = Math.max(0, debt.balance - principal);
            remainingBudget -= pay;
            monthInterest += actualInterest;
            monthPrincipal += principal;
          }

          // Then apply extra to target debt
          if (remainingBudget > 0.01) {
            const target = activeDebts.find((d) => d.balance > 0.01);
            if (target) {
              const r = target.apr / 100 / 12;
              const interest = target.balance * r;
              const pay = Math.min(remainingBudget, target.balance + interest);

              const actualInterest = Math.min(interest, pay);
              const principal = pay - actualInterest;

              target.balance = Math.max(0, target.balance - principal);
              remainingBudget -= pay;
              monthInterest += actualInterest;
              monthPrincipal += principal;
            }
          }

          totalInterest += monthInterest;
          const remainingBalance = debts.reduce((sum, d) => sum + d.balance, 0);

          schedule.push({
            month,
            payment: monthInterest + monthPrincipal,
            interest: monthInterest,
            principal: monthPrincipal,
            balance: remainingBalance,
          });

          if (remainingBalance <= 0.01) break;
        }

        const totalPaid =
          debtsInput.reduce((sum, d) => sum + d.balance, 0) + totalInterest;
        return {
          months: schedule.length,
          totalInterest,
          totalPaid,
          schedule,
        };
      }

      const calculateBtn = document.getElementById("calculate-btn");
      const errorMessage = document.getElementById("error-message");
      const resultsSection = document.getElementById("results-section");

      const avaTimeEl = document.getElementById("ava-time");
      const avaInterestEl = document.getElementById("ava-interest");
      const avaTotalEl = document.getElementById("ava-total");
      const snowTimeEl = document.getElementById("snow-time");
      const snowInterestEl = document.getElementById("snow-interest");
      const snowTotalEl = document.getElementById("snow-total");
      const compareInterestEl = document.getElementById("compare-interest");
      const compareMonthsEl = document.getElementById("compare-months");

      const scheduleStrategySelect =
        document.getElementById("schedule-strategy");
      const scheduleBody = document.getElementById("schedule-body");
      const scheduleNote = document.getElementById("schedule-note");
      const downloadCsvBtn = document.getElementById("download-csv");

      let lastAvalancheResult = null;
      let lastSnowballResult = null;

      calculateBtn.addEventListener("click", () => {
        errorMessage.classList.add("hidden");
        errorMessage.textContent = "";

        const debts = readDebts();
        if (!debts || debts.length === 0) {
          errorMessage.textContent = "Please enter at least one valid debt.";
          errorMessage.classList.remove("hidden");
          return;
        }

        const budget = parseFloat(
          document.getElementById("monthly-budget").value
        );
        const extra =
          parseFloat(document.getElementById("extra-payment").value) || 0;

        if (!isFinite(budget) || budget <= 0) {
          errorMessage.textContent =
            "Please enter a positive total monthly budget.";
          errorMessage.classList.remove("hidden");
          document
            .getElementById("monthly-budget")
            .classList.add("input-error");
          return;
        } else {
          document
            .getElementById("monthly-budget")
            .classList.remove("input-error");
        }

        const minSum = debts.reduce((sum, d) => sum + d.min, 0);
        if (budget < minSum - 0.01) {
          errorMessage.textContent =
            "Your monthly budget is less than the sum of minimum payments. Increase your budget or adjust minimums.";
          errorMessage.classList.remove("hidden");
          return;
        }

        // Simulate avalanche and snowball regardless of selected tab
        lastAvalancheResult = simulateStrategy(
          debts,
          budget,
          extra,
          "avalanche"
        );
        lastSnowballResult = simulateStrategy(debts, budget, extra, "snowball");

        // Populate summary
        avaTimeEl.textContent = monthsToYearsMonths(lastAvalancheResult.months);
        avaInterestEl.textContent = formatCurrency(
          lastAvalancheResult.totalInterest
        );
        avaTotalEl.textContent = formatCurrency(lastAvalancheResult.totalPaid);

        snowTimeEl.textContent = monthsToYearsMonths(lastSnowballResult.months);
        snowInterestEl.textContent = formatCurrency(
          lastSnowballResult.totalInterest
        );
        snowTotalEl.textContent = formatCurrency(lastSnowballResult.totalPaid);

        const interestSaved =
          lastSnowballResult.totalInterest - lastAvalancheResult.totalInterest;
        const monthsSaved =
          lastSnowballResult.months - lastAvalancheResult.months;

        compareInterestEl.textContent =
          interestSaved > 0 ? formatCurrency(interestSaved) : "$0";
        compareMonthsEl.textContent =
          monthsSaved > 0
            ? monthsSaved + " month" + (monthsSaved > 1 ? "s" : "")
            : "0";

        // Show schedule for selected strategy
        updateScheduleTable(scheduleStrategySelect.value);

        resultsSection.classList.remove("hidden");
        resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });

      function updateScheduleTable(strategy) {
        scheduleBody.innerHTML = "";
        let result = null;
        if (strategy === "avalanche") result = lastAvalancheResult;
        if (strategy === "snowball") result = lastSnowballResult;
        if (!result) return;

        result.schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b">${row.month}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.payment
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.interest
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.principal
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.balance
        )}</td>
      `;
          scheduleBody.appendChild(tr);
        });

        scheduleNote.textContent = `Schedule shown for the ${
          strategy === "avalanche" ? "debt avalanche" : "debt snowball"
        } method.`;
      }

      scheduleStrategySelect.addEventListener("change", () => {
        updateScheduleTable(scheduleStrategySelect.value);
      });

      downloadCsvBtn.addEventListener("click", () => {
        const strategy = scheduleStrategySelect.value;
        let result =
          strategy === "avalanche" ? lastAvalancheResult : lastSnowballResult;
        if (!result) return;

        let csv = "Month,Total Payment,Interest,Principal,Remaining Balance\n";
        result.schedule.forEach((row) => {
          csv +=
            [
              row.month,
              row.payment.toFixed(2),
              row.interest.toFixed(2),
              row.principal.toFixed(2),
              row.balance.toFixed(2),
            ].join(",") + "\n";
        });

        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = `debt-${strategy}-schedule.csv`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      });

      // FAQ toggle (simple, in addition to global script_faq)
      document
        .getElementById("faq-container")
        .addEventListener("click", (e) => {
          const btn = e.target.closest(".faq-question");
          if (!btn) return;
          const content = btn.nextElementSibling;
          const indicator = btn.querySelector("span:last-child");
          const isHidden = content.classList.contains("hidden");
          content.classList.toggle("hidden", !isHidden);
          indicator.textContent = isHidden ? "−" : "+";
        });

      // Initialize defaults
      (function init() {
        initDefaultRows();
        const startDateInput = document.getElementById("start-date");
        const now = new Date();
        const ym = now.toISOString().slice(0, 7);
        startDateInput.value = ym;
      })();

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !expanded);
        });
    </script>

