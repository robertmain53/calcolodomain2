  <!-- Calculator Logic (defer near end; event-driven; inline validation on blur) -->
  <script>
    (function(){
      const $ = (id) => document.getElementById(id);
      const els = {
        price: $('price'), down: $('down'), tradeValue: $('tradeValue'), tradeOwed: $('tradeOwed'),
        tax: $('tax'), fees: $('fees'), apr: $('apr'), term: $('term'), firstDate: $('firstDate'),
        outPayment: $('outPayment'), outOtd: $('outOtd'), outFinanced: $('outFinanced'),
        outInterest: $('outInterest'), outTotalCost: $('outTotalCost'), outPayoff: $('outPayoff'),
        scheduleBody: $('scheduleBody'), printBtn: $('printBtn'), copyBtn: $('copyBtn')
      };

      // Tooltip toggle (generic: any sibling with hidden tip)
      document.querySelectorAll('label + div > button, label + button').forEach(btn=>{
        btn.addEventListener('click', ()=>{
          const id = btn.getAttribute('aria-controls');
          if(!id) return;
          const tip = document.getElementById(id);
          const isHidden = tip.classList.contains('hidden');
          tip.classList.toggle('hidden');
          btn.setAttribute('aria-expanded', String(isHidden));
        });
      });

      // Mobile menu
      const menuToggle = document.getElementById('mobile-menu-toggle');
      const mobileMenu = document.getElementById('mobile-menu');
      if(menuToggle && mobileMenu){
        menuToggle.addEventListener('click', ()=>{
          const expanded = menuToggle.getAttribute('aria-expanded') === 'true';
          menuToggle.setAttribute('aria-expanded', String(!expanded));
          mobileMenu.classList.toggle('hidden');
        });
      }

      // Formatting helpers
      const fmt$ = (v) => new Intl.NumberFormat(undefined,{style:'currency',currency:'USD'}).format(+v||0);
      const fmtDate = (d) => new Intl.DateTimeFormat(undefined,{year:'numeric', month:'short'}).format(d);

      // Validation (on blur)
      const rules = {
        price: (v)=> v>=0 || 'Enter a non-negative price.',
        down:  (v)=> v>=0 || 'Down payment cannot be negative.',
        tax:   (v)=> v>=0 && v<=25 || 'Enter a realistic sales tax (0–25%).',
        fees:  (v)=> v>=0 || 'Fees cannot be negative.',
        apr:   (v)=> v>=0 && v<=60 || 'APR must be between 0% and 60%.',
        term:  (v)=> Number.isInteger(+v) && v>=6 && v<=120 || 'Term must be 6–120 months.',
        tradeValue: (v)=> v>=0 || 'Trade-in value cannot be negative.',
        tradeOwed:  (v)=> v>=0 || 'Trade-in balance owed cannot be negative.'
      };
      const errEl = (id) => document.getElementById(id + '-err');
      function validateField(id){
        const el = els[id];
        const v = parseFloat(el.value || '0');
        const rule = rules[id];
        if(!rule) return true;
        const ok = rule(v);
        const msg = ok === true ? '' : ok;
        const e = errEl(id);
        if(e){ e.textContent = msg; }
        el.setAttribute('aria-invalid', msg ? 'true' : 'false');
        return !msg;
      }
      Object.keys(rules).forEach(id=>{
        const el = els[id];
        el.addEventListener('blur', ()=>{ validateField(id); });
      });

      // Core calculation
      let chart;
      function calc(){
        // Ensure fields valid; still compute with clamped values
        Object.keys(rules).forEach(validateField);

        const price = Math.max(0, parseFloat(els.price.value)||0);
        const down  = Math.max(0, parseFloat(els.down.value)||0);
        const tradeV= Math.max(0, parseFloat(els.tradeValue.value)||0);
        const tradeB= Math.max(0, parseFloat(els.tradeOwed.value)||0);
        const tax   = Math.max(0, parseFloat(els.tax.value)||0) / 100;
        const fees  = Math.max(0, parseFloat(els.fees.value)||0);
        const apr   = Math.max(0, parseFloat(els.apr.value)||0) / 100;
        const term  = Math.max(1, Math.round(parseFloat(els.term.value)||0));

        // OTD (assume tax on net: price - trade-in)
        const taxableBase = Math.max(0, price - tradeV);
        const otd = taxableBase * (1 + tax) + fees;

        // Amount financed (add negative equity)
        const negativeEquity = Math.max(0, tradeB - tradeV);
        const financed = Math.max(0, otd - down + negativeEquity);

        // Payment (standard amortized, monthly)
        const i = apr/12;
        const n = term;
        let pmt = 0;
        if (i === 0) {
          pmt = financed / n;
        } else {
          pmt = (i * financed) / (1 - Math.pow(1 + i, -n));
        }

        // Schedule
        const schedule = [];
        let bal = financed;
        let totalInterest = 0;
        const start = els.firstDate.value ? new Date(els.firstDate.value + '-01') : new Date();
        for(let k=1;k<=n;k++){
          const interest = i * bal;
          const principal = Math.min(bal, pmt - interest);
          bal = Math.max(0, bal - principal);

          const d = new Date(start);
          d.setMonth(d.getMonth() + k);

          schedule.push({
            k, date: d,
            payment: pmt,
            interest, principal, balance: bal
          });
          totalInterest += interest;
        }

        const totalCost = otd + totalInterest;
        const payoffDate = schedule.length ? schedule[schedule.length-1].date : null;

        // Outputs
        els.outPayment.textContent   = fmt$(pmt);
        els.outOtd.textContent       = fmt$(otd);
        els.outFinanced.textContent  = fmt$(financed);
        els.outInterest.textContent  = fmt$(totalInterest);
        els.outTotalCost.textContent = fmt$(totalCost);
        els.outPayoff.textContent    = payoffDate ? fmtDate(payoffDate) : '—';

        // Table
        renderSchedule(schedule);

        // Chart
        renderChart(financed, totalInterest);

        // Copy summary payload
        currentSummary = {
          payment: els.outPayment.textContent,
          otd: els.outOtd.textContent,
          financed: els.outFinanced.textContent,
          interest: els.outInterest.textContent,
          totalCost: els.outTotalCost.textContent,
          payoff: els.outPayoff.textContent
        };
      }

      function renderSchedule(rows){
        const tb = els.scheduleBody;
        tb.innerHTML = '';
        const fmt = (v)=> fmt$(v);
        rows.forEach(r=>{
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td class="px-4 py-2 text-left">${r.k}</td>
            <td class="px-4 py-2 text-left">${fmtDate(r.date)}</td>
            <td class="px-4 py-2">${fmt(r.payment)}</td>
            <td class="px-4 py-2">${fmt(r.interest)}</td>
            <td class="px-4 py-2">${fmt(r.principal)}</td>
            <td class="px-4 py-2">${fmt(r.balance)}</td>
          `;
          tb.appendChild(tr);
        });
      }

      function renderChart(principalPortion, interestPortion){
        const ctx = document.getElementById('resultsChart').getContext('2d');
        const data = {
          labels: ['Principal', 'Interest'],
          datasets: [{ data: [Math.max(0, principalPortion), Math.max(0, interestPortion)] }]
        };
        if(chart){ chart.data = data; chart.update(); return; }
        chart = new Chart(ctx, {
          type: 'doughnut',
          data,
          options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: { legend: { position: 'bottom' } }
          }
        });
      }

      // Events -> fast, responsive updates
      ['price','down','tradeValue','tradeOwed','tax','fees','apr','term','firstDate']
        .forEach(id => els[id].addEventListener('input', calc));

      // Print and copy
      let currentSummary = {};
      els.printBtn.addEventListener('click', ()=> window.print());
      els.copyBtn.addEventListener('click', async ()=>{
        const t = `Motorcycle Loan Summary
Monthly Payment: ${currentSummary.payment}
Out-the-Door (OTD): ${currentSummary.otd}
Amount Financed: ${currentSummary.financed}
Total Interest: ${currentSummary.interest}
Total Cost: ${currentSummary.totalCost}
Estimated Payoff: ${currentSummary.payoff}`;
        try { await navigator.clipboard.writeText(t); els.copyBtn.textContent='Copied!'; setTimeout(()=>els.copyBtn.textContent='Copy summary',1500); }
        catch(e){ alert('Copy failed. You can select and copy manually.'); }
      });

      // Initial calc
      calc();
    })();
  </script>
