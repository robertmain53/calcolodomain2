    <script>
      // Utility functions
      function fmtCurrency(v) {
        if (!isFinite(v)) return "$0";
        return v.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }
      function fmtYearsMonths(months) {
        if (!isFinite(months) || months <= 0) return "0 years";
        const y = Math.floor(months / 12);
        const m = Math.round(months % 12);
        const parts = [];
        if (y > 0) parts.push(y + " year" + (y !== 1 ? "s" : ""));
        if (m > 0) parts.push(m + " month" + (m !== 1 ? "s" : ""));
        return parts.join(" ");
      }

      function getInputs() {
        const P = parseFloat(document.getElementById("loanAmount").value) || 0;
        const r =
          (parseFloat(document.getElementById("interestRate").value) || 0) /
          100;
        const years =
          parseFloat(document.getElementById("termYears").value) || 0;
        const graceMonths =
          parseFloat(document.getElementById("graceMonths").value) || 0;
        const loanType =
          document.querySelector('input[name="loanType"]:checked')?.value ||
          "unsubsidized";
        return { P, r, years, graceMonths, loanType };
      }

      function computeStandard() {
        const { P, r, years, graceMonths, loanType } = getInputs();
        const mRate = r / 12;
        const n = Math.max(1, Math.round(years * 12));

        // Interest during grace (simple approximation)
        let accrued = 0;
        if (loanType === "unsubsidized" && mRate > 0 && graceMonths > 0) {
          accrued = P * mRate * graceMonths;
        }
        const startBalance = P + accrued;

        let M = 0;
        if (mRate === 0) {
          M = startBalance / n;
        } else {
          const pow = Math.pow(1 + mRate, n);
          M = (startBalance * (mRate * pow)) / (pow - 1);
        }
        const totalPaid = M * n;
        const totalInterest = totalPaid - P;

        // Update UI
        document.getElementById("stdMonthly").textContent = fmtCurrency(M);
        document.getElementById("stdInterest").textContent = fmtCurrency(
          Math.max(0, totalInterest)
        );
        document.getElementById("stdTotal").textContent = fmtCurrency(
          Math.max(0, totalPaid)
        );
        document.getElementById("stdYears").textContent = fmtYearsMonths(n);

        document.getElementById("origPrincipal").textContent = fmtCurrency(P);
        document.getElementById("capitalizedInterest").textContent =
          fmtCurrency(Math.max(0, accrued));

        const noteEl = document.getElementById("capitalizedNote");
        if (loanType === "unsubsidized" && accrued > 0) {
          noteEl.textContent =
            "Because this is an unsubsidized loan, interest accrues during the grace period and is added (capitalized) to your balance when repayment begins.";
        } else if (loanType === "subsidized") {
          noteEl.textContent =
            "For subsidized loans, we assume no interest accrues during the grace period, so your repayment balance equals your original principal.";
        } else {
          noteEl.textContent = "";
        }

        return {
          startBalance,
          M,
          n,
          totalInterest: Math.max(0, totalInterest),
        };
      }

      function computeExtra(std) {
        const extra =
          parseFloat(document.getElementById("extraMonthly").value) || 0;
        const mRate =
          (parseFloat(document.getElementById("interestRate").value) || 0) /
          100 /
          12;
        const payment = std.M + extra;
        if (payment <= 0 || std.startBalance <= 0) {
          return null;
        }

        let balance = std.startBalance;
        let month = 0;
        let totalInterest = 0;
        const maxMonths = 100 * 12; // safety cap

        while (balance > 0 && month < maxMonths) {
          const interest = balance * mRate;
          const principalPay = Math.max(0, payment - interest);
          if (principalPay <= 0) break; // avoid infinite loop
          balance -= principalPay;
          totalInterest += interest;
          month++;
        }

        const totalPaid = payment * month;
        return {
          payment,
          months: month,
          totalInterest: Math.max(0, totalInterest),
          totalPaid,
        };
      }

      function updateExtra(std) {
        const res = computeExtra(std);
        const extraMonthlyOut = document.getElementById("extraMonthlyOut");
        const extraYears = document.getElementById("extraYears");
        const extraInterest = document.getElementById("extraInterest");
        const interestSaved = document.getElementById("interestSaved");
        const timeSaved = document.getElementById("timeSaved");

        if (!res) {
          extraMonthlyOut.textContent = "$0";
          extraYears.textContent = "0 years";
          extraInterest.textContent = "$0";
          interestSaved.textContent = "$0";
          timeSaved.textContent = "";
          return;
        }

        extraMonthlyOut.textContent = fmtCurrency(res.payment);
        extraYears.textContent = fmtYearsMonths(res.months);
        extraInterest.textContent = fmtCurrency(res.totalInterest);

        const saved = Math.max(0, std.totalInterest - res.totalInterest);
        interestSaved.textContent = fmtCurrency(saved);

        const timeDiff = std.n - res.months;
        if (timeDiff > 0) {
          timeSaved.textContent =
            "You pay off about " + fmtYearsMonths(timeDiff) + " sooner.";
        } else {
          timeSaved.textContent = "";
        }
      }

      function setTerm(years) {
        document.getElementById("termYears").value = years;
        const std = computeStandard();
        updateExtra(std);
      }

      function switchTab(tab) {
        const tabStandard = document.getElementById("tab-standard");
        const tabExtra = document.getElementById("tab-extra");
        const panelStandard = document.getElementById("panel-standard");
        const panelExtra = document.getElementById("panel-extra");

        if (tab === "standard") {
          tabStandard.classList.add("border-blue-600", "text-blue-600");
          tabStandard.classList.remove("border-transparent", "text-gray-500");
          tabExtra.classList.remove("border-blue-600", "text-blue-600");
          tabExtra.classList.add("border-transparent", "text-gray-500");
          panelStandard.classList.remove("hidden");
          panelExtra.classList.add("hidden");
        } else {
          tabExtra.classList.add("border-blue-600", "text-blue-600");
          tabExtra.classList.remove("border-transparent", "text-gray-500");
          tabStandard.classList.remove("border-blue-600", "text-blue-600");
          tabStandard.classList.add("border-transparent", "text-gray-500");
          panelExtra.classList.remove("hidden");
          panelStandard.classList.add("hidden");
        }
      }

      function resetDefaults() {
        document.getElementById("loanAmount").value = 30000;
        document.getElementById("interestRate").value = 5.5;
        document.getElementById("termYears").value = 10;
        document.getElementById("graceMonths").value = 6;
        document.querySelector(
          'input[name="loanType"][value="unsubsidized"]'
        ).checked = true;
        document.getElementById("extraMonthly").value = 100;
        switchTab("standard");
        const std = computeStandard();
        updateExtra(std);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const inputs = [
          "loanAmount",
          "interestRate",
          "termYears",
          "graceMonths",
        ];
        inputs.forEach((id) => {
          document.getElementById(id).addEventListener("input", () => {
            const std = computeStandard();
            updateExtra(std);
          });
        });

        document.querySelectorAll('input[name="loanType"]').forEach((r) => {
          r.addEventListener("change", () => {
            const std = computeStandard();
            updateExtra(std);
          });
        });

        document
          .getElementById("btnStandard10")
          .addEventListener("click", () => setTerm(10));
        document
          .getElementById("btnExtended20")
          .addEventListener("click", () => setTerm(20));
        document
          .getElementById("btnAggressive5")
          .addEventListener("click", () => setTerm(5));

        document
          .getElementById("tab-standard")
          .addEventListener("click", () => switchTab("standard"));
        document
          .getElementById("tab-extra")
          .addEventListener("click", () => switchTab("extra"));

        document
          .getElementById("btnApplyExtra")
          .addEventListener("click", () => {
            const std = computeStandard();
            updateExtra(std);
          });

        document
          .getElementById("extraMonthly")
          .addEventListener("input", () => {
            const std = computeStandard();
            updateExtra(std);
          });

        document
          .getElementById("btnReset")
          .addEventListener("click", resetDefaults);

        // Initial calculation
        const std = computeStandard();
        updateExtra(std);
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
