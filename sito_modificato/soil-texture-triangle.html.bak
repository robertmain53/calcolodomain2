    <script>
      // Basic USDA texture class mapping (approximate, rule-based)
      function classifyTexture(sand, silt, clay) {
        // Based on USDA NRCS triangle; simplified rule set
        if (clay >= 40 && silt <= 40 && sand <= 45) return "Clay";
        if (clay >= 35 && sand >= 45) return "Sandy clay";
        if (clay >= 40 && silt >= 40) return "Silty clay";
        if (clay >= 27 && clay < 40 && sand <= 45 && silt <= 40)
          return "Clay loam";
        if (clay >= 27 && clay < 40 && sand > 45) return "Sandy clay loam";
        if (clay >= 27 && clay < 40 && silt > 40) return "Silty clay loam";
        if (clay >= 20 && clay < 27 && sand >= 45 && silt <= 28)
          return "Sandy clay loam";
        if (clay >= 20 && clay < 27 && silt >= 28 && silt <= 50 && sand <= 52)
          return "Clay loam";
        if (clay >= 20 && clay < 27 && silt > 50) return "Silty clay loam";
        if (clay >= 7 && clay < 27 && sand >= 52 && silt <= 50)
          return "Sandy clay loam";
        if (clay >= 7 && clay < 27 && silt >= 28 && silt <= 50 && sand < 52)
          return "Loam";
        if (clay >= 7 && clay < 27 && silt > 50) return "Silt loam";
        if (clay < 7 && silt >= 50 && silt < 80 && sand <= 50)
          return "Silt loam";
        if (clay < 12 && silt >= 80) return "Silt";
        if (clay < 7 && sand >= 70 && silt < 30) return "Sand";
        if (clay < 7 && sand >= 70 && silt >= 30) return "Loamy sand";
        if (clay >= 7 && clay < 20 && sand >= 52 && sand < 85)
          return "Sandy loam";
        if (clay >= 7 && clay < 27 && sand < 52 && silt >= 28 && silt <= 50)
          return "Loam";
        if (clay < 27 && silt >= 50 && silt < 80 && sand < 50)
          return "Silt loam";
        return "Loam";
      }

      function textureSummary(texture) {
        switch (texture) {
          case "Sand":
            return "Very coarse-textured soil with rapid drainage, low water and nutrient holding capacity, and high drought risk.";
          case "Loamy sand":
            return "Dominated by sand but with enough finer particles to slightly improve water and nutrient retention.";
          case "Sandy loam":
            return "Coarse but workable soil with moderate water-holding capacity and good aeration.";
          case "Loam":
            return "Balanced mixture of sand, silt, and clay; generally ideal for many crops and gardens.";
          case "Silt loam":
            return "Fine-textured soil with high water-holding capacity; can crust and compact if not managed carefully.";
          case "Silt":
            return "Very fine mineral particles; holds water well but can be prone to erosion and crusting.";
          case "Clay loam":
            return "Medium to fine-textured soil with good nutrient retention but slower drainage.";
          case "Sandy clay loam":
            return "Clay-rich but still relatively sandy; holds nutrients yet drains better than pure clay.";
          case "Silty clay loam":
            return "Fine-textured soil with high water and nutrient holding capacity; can be sticky when wet.";
          case "Sandy clay":
            return "Clay-dominated soil with significant sand; can be dense and hard when dry, sticky when wet.";
          case "Silty clay":
            return "Very fine-textured soil with strong water and nutrient retention but poor drainage.";
          case "Clay":
            return "Very fine-textured soil with high water and nutrient holding capacity, slow drainage, and high shrink–swell potential.";
          default:
            return "Intermediate texture with a balance of drainage, water-holding capacity, and nutrient retention.";
        }
      }

      function updateSumDisplay() {
        const sand =
          parseFloat(document.getElementById("sand-input").value) || 0;
        const silt =
          parseFloat(document.getElementById("silt-input").value) || 0;
        const clay =
          parseFloat(document.getElementById("clay-input").value) || 0;
        const sum = sand + silt + clay;
        document.getElementById("sum-display").textContent = sum.toFixed(1);
      }

      function plotPoint(sand, silt, clay) {
        const total = sand + silt + clay;
        if (total === 0) {
          document
            .getElementById("sample-point")
            .setAttribute("visibility", "hidden");
          return;
        }
        const s = sand / total;
        const si = silt / total;
        const c = clay / total;

        const S = { x: 220, y: 200 };
        const C = { x: 20, y: 200 };
        const Si = { x: 120, y: 20 };

        const x = s * S.x + si * Si.x + c * C.x;
        const y = s * S.y + si * Si.y + c * C.y;

        const point = document.getElementById("sample-point");
        point.setAttribute("cx", x);
        point.setAttribute("cy", y);
        point.setAttribute("visibility", "visible");
      }

      function classifyAndDisplay() {
        const sandInput = document.getElementById("sand-input");
        const siltInput = document.getElementById("silt-input");
        const clayInput = document.getElementById("clay-input");
        const normalize = document.getElementById("normalize-checkbox").checked;
        const errorEl = document.getElementById("input-error");
        const classEl = document.getElementById("class-display");
        const summaryEl = document.getElementById("class-summary");

        let sand = parseFloat(sandInput.value);
        let silt = parseFloat(siltInput.value);
        let clay = parseFloat(clayInput.value);

        if ([sand, silt, clay].some((v) => isNaN(v))) {
          errorEl.textContent =
            "Please enter numeric values for sand, silt, and clay.";
          errorEl.classList.remove("hidden");
          classEl.textContent = "–";
          summaryEl.textContent = "";
          return;
        }

        if ([sand, silt, clay].some((v) => v < 0 || v > 100)) {
          errorEl.textContent = "Each percentage must be between 0 and 100.";
          errorEl.classList.remove("hidden");
          classEl.textContent = "–";
          summaryEl.textContent = "";
          return;
        }

        let sum = sand + silt + clay;
        if (Math.abs(sum - 100) > 0.5) {
          if (normalize && sum > 0) {
            sand = (sand / sum) * 100;
            silt = (silt / sum) * 100;
            clay = (clay / sum) * 100;
            sandInput.value = sand.toFixed(1);
            siltInput.value = silt.toFixed(1);
            clayInput.value = clay.toFixed(1);
            sum = 100;
            updateSumDisplay();
          } else {
            errorEl.textContent =
              "Sand + silt + clay must add up to approximately 100%. Enable normalization to auto-correct.";
            errorEl.classList.remove("hidden");
            classEl.textContent = "–";
            summaryEl.textContent = "";
            return;
          }
        }

        errorEl.classList.add("hidden");

        const texture = classifyTexture(sand, silt, clay);
        classEl.textContent = texture;
        summaryEl.textContent = textureSummary(texture);

        plotPoint(sand, silt, clay);
      }

      document.addEventListener("DOMContentLoaded", function () {
        ["sand-input", "silt-input", "clay-input"].forEach((id) => {
          document.getElementById(id).addEventListener("input", () => {
            updateSumDisplay();
            document.getElementById("input-error").classList.add("hidden");
          });
        });

        document
          .getElementById("classify-btn")
          .addEventListener("click", classifyAndDisplay);

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("sand-input").value = 40;
          document.getElementById("silt-input").value = 40;
          document.getElementById("clay-input").value = 20;
          document.getElementById("normalize-checkbox").checked = false;
          updateSumDisplay();
          classifyAndDisplay();
        });

        // Initialize with example loam
        updateSumDisplay();
        classifyAndDisplay();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
