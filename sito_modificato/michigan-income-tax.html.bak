    <script>
      // --- CONFIG: Update this when Michigan changes its flat rate ---
      const MI_STATE_TAX_RATE = 0.0425; // 4.25% example flat rate

      const incomeTypeButtons = document.querySelectorAll(".income-type-btn");
      const incomeInput = document.getElementById("income");
      const incomeHelper = document.getElementById("income-helper");
      const hoursPerWeekGroup = document.getElementById("hours-per-week-group");
      const weeksPerYearGroup = document.getElementById("weeks-per-year-group");
      const hoursPerWeekInput = document.getElementById("hours-per-week");
      const weeksPerYearInput = document.getElementById("weeks-per-year");

      let currentIncomeType = "annual";

      incomeTypeButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          currentIncomeType = btn.dataset.incomeType;
          incomeTypeButtons.forEach((b) => {
            b.classList.remove(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700",
              "font-medium"
            );
            b.classList.add("border-gray-300", "text-gray-700");
          });
          btn.classList.add(
            "border-blue-600",
            "bg-blue-50",
            "text-blue-700",
            "font-medium"
          );
          btn.classList.remove("border-gray-300", "text-gray-700");

          if (currentIncomeType === "hourly") {
            hoursPerWeekGroup.classList.remove("hidden");
            weeksPerYearGroup.classList.remove("hidden");
            incomeHelper.textContent = "Enter your hourly wage before tax.";
          } else {
            hoursPerWeekGroup.classList.add("hidden");
            weeksPerYearGroup.classList.add("hidden");
            incomeHelper.textContent =
              currentIncomeType === "monthly"
                ? "Enter your gross monthly income before Michigan tax."
                : "Enter your gross annual income before Michigan tax.";
          }
        });
      });

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(2).replace(/\.00$/, "") + "%";
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        let income = parseFloat(incomeInput.value) || 0;
        const pretax =
          parseFloat(document.getElementById("pretax-deductions").value) || 0;
        const localRateInput =
          parseFloat(document.getElementById("local-tax-rate").value) || 0;

        if (income < 0) income = 0;

        // Convert to annual based on income type
        let annualIncome;
        if (currentIncomeType === "hourly") {
          const hours = parseFloat(hoursPerWeekInput.value) || 0;
          const weeks = parseFloat(weeksPerYearInput.value) || 0;
          annualIncome = income * hours * weeks;
        } else if (currentIncomeType === "monthly") {
          annualIncome = income * 12;
        } else {
          annualIncome = income;
        }

        if (annualIncome < 0) annualIncome = 0;

        const pretaxAnnual = Math.min(pretax, annualIncome);
        const taxableIncome = Math.max(0, annualIncome - pretaxAnnual);

        const stateTax = taxableIncome * MI_STATE_TAX_RATE;
        const localRate = localRateInput / 100;
        const localTax = taxableIncome * localRate;
        const totalTax = stateTax + localTax;

        const netAnnual = annualIncome - totalTax;
        const netMonthly = netAnnual / 12;
        const netBiweekly = netAnnual / 26;
        const netWeekly = netAnnual / 52;

        const effectiveRate = annualIncome > 0 ? totalTax / annualIncome : 0;

        // Update outputs
        document.getElementById("out-gross").textContent =
          formatCurrency(annualIncome);
        document.getElementById("out-pretax").textContent =
          formatCurrency(pretaxAnnual);
        document.getElementById("out-taxable").textContent =
          formatCurrency(taxableIncome);

        document.getElementById("out-state-tax").textContent =
          formatCurrency(stateTax);
        document.getElementById("out-local-tax").textContent =
          formatCurrency(localTax);
        document.getElementById("out-total-tax").textContent =
          formatCurrency(totalTax);
        document.getElementById("out-effective-rate").textContent =
          formatPercent(effectiveRate);

        document.getElementById("out-net-annual").textContent =
          formatCurrency(netAnnual);
        document.getElementById("out-net-monthly").textContent =
          formatCurrency(netMonthly);
        document.getElementById("out-net-biweekly").textContent =
          formatCurrency(netBiweekly);
        document.getElementById("out-net-weekly").textContent =
          formatCurrency(netWeekly);
      });

      // Auto-calc on load with a default example
      window.addEventListener("DOMContentLoaded", () => {
        incomeInput.value = "65000";
        document.getElementById("calculate-btn").click();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
