      function parseInput(id) {
        const val = parseFloat(
          document.getElementById(id).value.replace(/,/g, "")
        );
        return isNaN(val) ? 0 : Math.max(0, val);
      }

      function formatCurrency(value) {
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        return (value * 100).toFixed(1) + "%";
      }

      function computeTaxFromBrackets(taxableIncome, brackets) {
        let remaining = taxableIncome;
        let lastLimit = 0;
        let totalTax = 0;
        const breakdown = [];

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const cap = bracket.upTo;
          const amountInBracket = Math.max(
            0,
            Math.min(remaining, cap - lastLimit)
          );
          if (amountInBracket > 0) {
            const tax = amountInBracket * bracket.rate;
            totalTax += tax;
            breakdown.push({
              from: lastLimit,
              to: cap,
              amount: amountInBracket,
              rate: bracket.rate,
              tax,
            });
            remaining -= amountInBracket;
          }
          lastLimit = cap;
        }
        return { totalTax, breakdown };
      }

      function calculateRiTax() {
        const filingStatus = document.getElementById("filingStatus").value;
        const year = document.getElementById("taxYear").value;
        const includeFederal =
          document.getElementById("includeFederal").checked;

        const wages = parseInput("wageIncome");
        const selfEmp = parseInput("selfEmploymentIncome");
        const other = parseInput("otherIncome");
        const pretax = parseInput("pretaxDeductions");
        const riAdj = parseInput("riAdjustments");
        const riCredits = parseInput("riCredits");

        const totalIncome = wages + selfEmp + other;
        const adjustedIncome = Math.max(0, totalIncome - pretax);

        const riConfig = RI_PARAMS[year];
        const riStdDed = riConfig.standardDeduction[filingStatus] || 0;
        const riTaxable = Math.max(0, adjustedIncome - riStdDed - riAdj);

        const { totalTax: riTaxRaw, breakdown } = computeTaxFromBrackets(
          riTaxable,
          riConfig.brackets
        );
        const riTax = Math.max(0, riTaxRaw - riCredits);

        const riEffectiveRate = totalIncome > 0 ? riTax / totalIncome : 0;
        const netAfterRi = totalIncome - riTax;

        document.getElementById("resultsSection").classList.remove("hidden");
        document.getElementById("grossIncome").textContent =
          formatCurrency(totalIncome);
        document.getElementById("riTaxableIncome").textContent =
          formatCurrency(riTaxable);
        document.getElementById("riTax").textContent = formatCurrency(riTax);
        document.getElementById("riEffectiveRate").textContent =
          formatPercent(riEffectiveRate);
        document.getElementById("netAfterRi").textContent =
          formatCurrency(netAfterRi);

        const tbody = document.getElementById("riBracketTableBody");
        tbody.innerHTML = "";
        if (riTaxable === 0) {
          const tr = document.createElement("tr");
          tr.innerHTML =
            '<td class="py-2 pr-4 text-gray-600" colspan="4">No Rhode Island taxable income.</td>';
          tbody.appendChild(tr);
        } else {
          breakdown.forEach((b, idx) => {
            const tr = document.createElement("tr");
            const label =
              b.to === Infinity
                ? `${formatCurrency(b.from)}+`
                : `${formatCurrency(b.from)} – ${formatCurrency(b.to)}`;
            tr.innerHTML = `
          <td class="py-2 pr-4">Bracket ${idx + 1} (${label})</td>
          <td class="py-2 pr-4">${formatCurrency(b.amount)}</td>
          <td class="py-2 pr-4">${formatPercent(b.rate)}</td>
          <td class="py-2 pr-4">${formatCurrency(b.tax)}</td>
        `;
            tbody.appendChild(tr);
          });
        }

        const fedSection = document.getElementById("federalComparison");
        if (includeFederal) {
          const fedConfig = FED_PARAMS[year];
          const fedStdDed = fedConfig.standardDeduction[filingStatus] || 0;
          const fedTaxable = Math.max(0, adjustedIncome - fedStdDed);
          const { totalTax: fedTax } = computeTaxFromBrackets(
            fedTaxable,
            fedConfig.brackets[filingStatus]
          );

          const combinedTax = fedTax + riTax;
          const combinedEffective =
            totalIncome > 0 ? combinedTax / totalIncome : 0;
          const netAfterAll = totalIncome - combinedTax;

          document.getElementById("federalTaxableIncome").textContent =
            formatCurrency(fedTaxable);
          document.getElementById("federalTax").textContent =
            formatCurrency(fedTax);
          document.getElementById("combinedEffectiveRate").textContent =
            formatPercent(combinedEffective);
          document.getElementById("netAfterAll").textContent =
            formatCurrency(netAfterAll);

          fedSection.classList.remove("hidden");
        } else {
          fedSection.classList.add("hidden");
        }
      }

