            <script>
              document.addEventListener('DOMContentLoaded', function() {
                const input = document.getElementById('decimal-input');
                const calculateBtn = document.getElementById('calculate-btn');
                const resultsContainer = document.getElementById('results-container');
                const errorMessage = document.getElementById('error-message');
                const resultSimplified = document.getElementById('result-simplified');
                const resultImproper = document.getElementById('result-improper');
                const resultMixed = document.getElementById('result-mixed');
                const stepByStep = document.getElementById('step-by-step');

                // --- Helper: GCD for Fraction Simplification ---
                function gcd(a, b) {
                    a = Math.abs(a);
                    b = Math.abs(b);
                    while (b) {
                        [a, b] = [b, a % b];
                    }
                    return a;
                }
                
                function formatFraction(num, den) {
                    return `$$\\frac{${num}}{${den}}$$`;
                }

                // --- Main Conversion Logic ---
                function convertDecimalToFraction(decimal) {
                    const sign = decimal < 0 ? '-' : '';
                    const absDecimal = Math.abs(decimal);
                    
                    const wholePart = Math.floor(absDecimal);
                    const decimalString = absDecimal.toString().split('.')[1] || '';
                    
                    if (decimalString === '') {
                        return { 
                            simplified: `${sign}${wholePart}`, 
                            improper: `${sign}${wholePart}/1`, 
                            mixed: `${sign}${wholePart}`,
                            steps: `<p>The input number ${sign}${wholePart} is already a whole number and can be written as ${sign}${wholePart}/1 (Improper Fraction).</p>`,
                            num: wholePart,
                            den: 1
                        };
                    }
                    
                    const numDecimalDigits = decimalString.length;
                    const initialNumerator = parseInt(decimalString, 10);
                    const initialDenominator = Math.pow(10, numDecimalDigits);
                    
                    // Step 1: Simplification
                    const commonDivisor = gcd(initialNumerator, initialDenominator);
                    const simplifiedNumerator = initialNumerator / commonDivisor;
                    const simplifiedDenominator = initialDenominator / commonDivisor;
                    
                    // Step 2: Improper Fraction
                    const improperNumerator = (wholePart * simplifiedDenominator) + simplifiedNumerator;
                    
                    // Step 3: Mixed Number
                    const mixedWhole = Math.floor(improperNumerator / simplifiedDenominator);
                    const mixedNumerator = improperNumerator % simplifiedDenominator;

                    let simplifiedOutput = formatFraction(simplifiedNumerator, simplifiedDenominator);
                    let improperOutput = formatFraction(improperNumerator, simplifiedDenominator);
                    let mixedOutput;
                    
                    if (mixedWhole === 0) {
                        mixedOutput = simplifiedOutput;
                    } else {
                        mixedOutput = `$$${mixedWhole} \\frac{${mixedNumerator}}{${simplifiedDenominator}}$$`;
                    }
                    
                    // Apply sign to the final latex strings
                    simplifiedOutput = (sign === '-' ? '-' : '') + simplifiedOutput.replace(/(\$\$)/g, '');
                    improperOutput = (sign === '-' ? '-' : '') + improperOutput.replace(/(\$\$)/g, '');
                    mixedOutput = (sign === '-' ? '-' : '') + mixedOutput.replace(/(\$\$)/g, '');
                    
                    let steps = `
                        <p>1. <strong>Initial Fraction:</strong> The number ${absDecimal} has ${numDecimalDigits} decimal place(s).</p>
                        <p class="formula-box text-center">$$\\frac{${initialNumerator}}{${initialDenominator}}$$</p>
                        <p>2. <strong>Find GCD:</strong> The Greatest Common Divisor (GCD) of the numerator (${initialNumerator}) and the denominator (${initialDenominator}) is <strong>${commonDivisor}</strong>.</p>
                        <p>3. <strong>Simplify:</strong> Divide both parts by the GCD:</p>
                        <p class="formula-box text-center">$$\\frac{${initialNumerator} \\div ${commonDivisor}}{${initialDenominator} \\div ${commonDivisor}} = \\frac{${simplifiedNumerator}}{${simplifiedDenominator}}$$</p>
                        <p>4. <strong>Improper Fraction:</strong> (If whole part $\\neq 0$) Convert ${wholePart} \\frac{${simplifiedNumerator}}{${simplifiedDenominator}}$:</p>
                        <p class="formula-box text-center">$$\\frac{(${wholePart} \\times ${simplifiedDenominator}) + ${simplifiedNumerator}}{${simplifiedDenominator}} = \\frac{${improperNumerator}}{${simplifiedDenominator}}$$</p>
                    `;
                    
                    if (sign === '-') {
                         steps += `<p class="mt-4">5. <strong>Apply Sign:</strong> Since the original decimal was negative, the resulting fractions are also negative.</p>`;
                    }

                    return {
                        simplified: simplifiedOutput,
                        improper: improperOutput,
                        mixed: mixedOutput,
                        steps: steps
                    };
                }

                calculateBtn.addEventListener('click', () => {
                    const rawInput = input.value.trim();
                    const decimal = parseFloat(rawInput);
                    
                    try {
                        if (rawInput === '' || isNaN(decimal)) {
                            throw new Error('Please enter a valid decimal number.');
                        }
                        
                        // Check for complex repeating decimals which this calculator doesn't solve precisely
                        const rawFraction = input.value.split('.')[1];
                        if (rawFraction && rawFraction.length > 10) {
                            throw new Error('Input is too long or may be a repeating decimal. This calculator supports terminating decimals up to 10 places.');
                        }
                        
                        errorMessage.textContent = '';
                        
                        const results = convertDecimalToFraction(decimal);
                        
                        // Update DOM
                        resultSimplified.innerHTML = results.simplified;
                        resultImproper.innerHTML = results.improper;
                        resultMixed.innerHTML = results.mixed;
                        stepByStep.innerHTML = results.steps;
                        resultsContainer.classList.remove('hidden');

                        // Re-render MathJax
                        if (window.MathJax) {
                            window.MathJax.typesetPromise([resultSimplified, resultImproper, resultMixed, stepByStep]);
                        }

                    } catch (e) {
                        showError(e.message);
                    }
                });
                
                // Initial calculation (for example values)
                calculateBtn.click(); 
              });
            </script>

