    <script>
      // WHIP calculator logic
      function parseInningsFromDecimal(ipDec) {
        if (isNaN(ipDec) || ipDec < 0) return null;
        const full = Math.trunc(ipDec);
        const frac = +(ipDec - full).toFixed(2);
        let outs = 0;
        if (Math.abs(frac - 0.1) < 0.011) outs = 1;
        else if (Math.abs(frac - 0.2) < 0.011) outs = 2;
        else if (Math.abs(frac) < 0.011) outs = 0;
        else return null; // invalid MLB-style decimal
        return full + outs / 3;
      }

      function computeTrueIP() {
        const ipInnings = parseFloat(
          document.getElementById("ip-innings").value || "0"
        );
        const ipOuts = parseInt(
          document.getElementById("ip-outs").value || "0",
          10
        );
        const ipDecimalField = document
          .getElementById("ip-decimal")
          .value.trim();

        if (ipDecimalField !== "") {
          const ipDec = parseFloat(ipDecimalField);
          return parseInningsFromDecimal(ipDec);
        } else {
          if (
            isNaN(ipInnings) ||
            isNaN(ipOuts) ||
            ipInnings < 0 ||
            ipOuts < 0 ||
            ipOuts > 2
          ) {
            return null;
          }
          return ipInnings + ipOuts / 3;
        }
      }

      function interpretWHIP(whip) {
        if (!isFinite(whip)) return "Enter valid stats to see interpretation.";
        if (whip <= 1.0)
          return "Elite WHIP – outstanding control and baserunner prevention.";
        if (whip <= 1.2)
          return "Very good WHIP – strong performance, above typical league average.";
        if (whip <= 1.35)
          return "Average WHIP – roughly in line with typical league pitchers.";
        if (whip <= 1.5)
          return "Below-average WHIP – allows frequent baserunners; some risk.";
        return "Poor WHIP – high number of baserunners; likely to allow many runs.";
      }

      document
        .getElementById("calc-btn")
        .addEventListener("click", function () {
          const walks = parseFloat(
            document.getElementById("walks").value || "0"
          );
          const hits = parseFloat(document.getElementById("hits").value || "0");
          const errorEl = document.getElementById("input-error");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          if (walks < 0 || hits < 0) {
            errorEl.textContent = "Walks and hits cannot be negative.";
            errorEl.classList.remove("hidden");
            return;
          }

          const ip = computeTrueIP();
          if (ip === null) {
            errorEl.textContent =
              "Please enter a valid innings pitched value. For decimal IP, use MLB style: .1 = 1 out, .2 = 2 outs.";
            errorEl.classList.remove("hidden");
            return;
          }
          if (ip === 0) {
            errorEl.textContent =
              "Innings pitched must be greater than 0 to compute WHIP.";
            errorEl.classList.remove("hidden");
            return;
          }

          const baserunners = walks + hits;
          const whip = baserunners / ip;

          document.getElementById("total-baserunners").textContent =
            baserunners.toString();
          document.getElementById("ip-true-decimal").textContent =
            ip.toFixed(2);
          document.getElementById("whip-result").textContent = whip.toFixed(2);
          document.getElementById("whip-interpretation").textContent =
            interpretWHIP(whip);
        });

      document
        .getElementById("reset-btn")
        .addEventListener("click", function () {
          document.getElementById("walks").value = "0";
          document.getElementById("hits").value = "0";
          document.getElementById("ip-innings").value = "0";
          document.getElementById("ip-outs").value = "0";
          document.getElementById("ip-decimal").value = "";
          document.getElementById("total-baserunners").textContent = "0";
          document.getElementById("ip-true-decimal").textContent = "0.00";
          document.getElementById("whip-result").textContent = "0.00";
          document.getElementById("whip-interpretation").textContent =
            "Enter stats and click “Calculate WHIP” to see the result.";
          const errorEl = document.getElementById("input-error");
          errorEl.classList.add("hidden");
          errorEl.textContent = "";
        });

      // Keep innings/decimal fields mutually informative
      document
        .getElementById("ip-innings")
        .addEventListener("input", function () {
          if (document.getElementById("ip-decimal").value.trim() !== "") {
            document.getElementById("ip-decimal").value = "";
          }
        });
      document
        .getElementById("ip-outs")
        .addEventListener("change", function () {
          if (document.getElementById("ip-decimal").value.trim() !== "") {
            document.getElementById("ip-decimal").value = "";
          }
        });
      document
        .getElementById("ip-decimal")
        .addEventListener("input", function () {
          if (this.value.trim() !== "") {
            document.getElementById("ip-innings").value = "0";
            document.getElementById("ip-outs").value = "0";
          }
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
