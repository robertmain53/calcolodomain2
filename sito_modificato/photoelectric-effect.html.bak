    <script>
      // Physical constants
      const h = 6.62607015e-34; // Planck constant (J·s)
      const c = 2.99792458e8; // speed of light (m/s)
      const eCharge = 1.602176634e-19; // elementary charge (C)
      const mElectron = 9.10938356e-31; // electron mass (kg)

      const metalWorkFunctionsEV = {
        cesium: 1.9,
        potassium: 2.3,
        sodium: 2.3,
        calcium: 2.9,
        aluminum: 4.1,
        zinc: 4.3,
        copper: 4.7,
        silver: 4.3,
        platinum: 6.4,
      };

      function formatSci(value, unit, digits = 3) {
        if (!isFinite(value) || isNaN(value)) return "–";
        if (value === 0) return `0 ${unit}`;
        const exp = Math.floor(Math.log10(Math.abs(value)));
        if (exp >= -2 && exp <= 3) {
          return `${value.toFixed(digits)} ${unit}`;
        }
        const mant = value / Math.pow(10, exp);
        return `${mant.toFixed(digits)}×10^${exp} ${unit}`;
      }

      function setText(id, text) {
        document.getElementById(id).textContent = text;
      }

      function resetResults() {
        [
          "res-photon-energy-ev",
          "res-photon-energy-j",
          "res-threshold-freq",
          "res-threshold-lambda",
          "res-ke-ev",
          "res-ke-j",
          "res-stopping-v",
          "res-speed",
        ].forEach((id) => setText(id, "–"));
        document.getElementById("no-emission-note").classList.add("hidden");
        const err = document.getElementById("calc-error");
        err.textContent = "";
        err.classList.add("hidden");
      }

      document
        .getElementById("metal-select")
        .addEventListener("change", function () {
          const val = this.value;
          if (val !== "custom" && metalWorkFunctionsEV[val] !== undefined) {
            document.getElementById("work-function").value =
              metalWorkFunctionsEV[val].toFixed(2);
            document.getElementById("work-function-unit").value = "eV";
          }
        });

      document
        .getElementById("reset-btn")
        .addEventListener("click", function () {
          document.getElementById("metal-select").value = "custom";
          document.getElementById("work-function").value = 2.3;
          document.getElementById("work-function-unit").value = "eV";
          document.getElementById("wavelength").value = 400;
          document.getElementById("wavelength-unit").value = "nm";
          document.getElementById("frequency").value = "";
          document.getElementById("frequency-unit").value = "Hz";
          resetResults();
        });

      document
        .getElementById("calculate-btn")
        .addEventListener("click", function () {
          resetResults();
          const err = document.getElementById("calc-error");

          let phiVal = parseFloat(
            document.getElementById("work-function").value
          );
          const phiUnit = document.getElementById("work-function-unit").value;

          if (isNaN(phiVal) || phiVal <= 0) {
            err.textContent = "Please enter a positive work function.";
            err.classList.remove("hidden");
            return;
          }

          // Work function in joules
          let phiJ = phiUnit === "eV" ? phiVal * eCharge : phiVal;
          let phiEV = phiUnit === "eV" ? phiVal : phiVal / eCharge;

          // Frequency or wavelength
          let freqInput = document.getElementById("frequency").value.trim();
          let fHz = null;
          if (freqInput !== "") {
            let fVal = parseFloat(freqInput);
            const fUnit = document.getElementById("frequency-unit").value;
            if (isNaN(fVal) || fVal <= 0) {
              err.textContent =
                "Please enter a positive frequency or leave it blank.";
              err.classList.remove("hidden");
              return;
            }
            if (fUnit === "THz") fVal *= 1e12;
            fHz = fVal;
          } else {
            // Use wavelength
            let lambdaVal = parseFloat(
              document.getElementById("wavelength").value
            );
            const lambdaUnit = document.getElementById("wavelength-unit").value;
            if (isNaN(lambdaVal) || lambdaVal <= 0) {
              err.textContent = "Please enter a positive wavelength.";
              err.classList.remove("hidden");
              return;
            }
            if (lambdaUnit === "nm") lambdaVal *= 1e-9;
            const lambdaM = lambdaVal;
            fHz = c / lambdaM;
          }

          // Photon energy
          const photonEnergyJ = h * fHz;
          const photonEnergyEV = photonEnergyJ / eCharge;

          // Threshold frequency and wavelength
          const f0 = phiJ / h;
          const lambda0 = c / f0;

          // Max kinetic energy
          let keJ = photonEnergyJ - phiJ;
          if (keJ < 0) keJ = 0;
          const keEV = keJ / eCharge;

          // Stopping potential and speed
          let Vs = 0;
          let vMax = 0;
          if (keJ > 0) {
            Vs = keJ / eCharge;
            vMax = Math.sqrt((2 * keJ) / mElectron);
          }

          // Populate results
          setText("res-photon-energy-ev", photonEnergyEV.toFixed(3) + " eV");
          setText("res-photon-energy-j", formatSci(photonEnergyJ, "J"));
          setText("res-threshold-freq", formatSci(f0, "Hz"));
          setText("res-threshold-lambda", formatSci(lambda0, "m"));

          if (keJ === 0) {
            setText("res-ke-ev", "0 eV");
            setText("res-ke-j", "0 J");
            setText("res-stopping-v", "0 V");
            setText("res-speed", "0 m/s");
            document
              .getElementById("no-emission-note")
              .classList.remove("hidden");
          } else {
            setText("res-ke-ev", keEV.toFixed(3) + " eV");
            setText("res-ke-j", formatSci(keJ, "J"));
            setText("res-stopping-v", Vs.toFixed(3) + " V");
            setText("res-speed", formatSci(vMax, "m/s"));
          }
        });

      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
