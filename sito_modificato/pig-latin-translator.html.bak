<script>
  // Utility: detect capitalization style
  function detectCaps(word) {
    if (word.toUpperCase() === word && /[A-Z]/.test(word)) return 'upper';
    if (word[0] && word[0] === word[0].toUpperCase() && word.slice(1) === word.slice(1).toLowerCase()) return 'title';
    return 'lower';
  }

  function applyCaps(word, style) {
    if (!word) return word;
    switch (style) {
      case 'upper': return word.toUpperCase();
      case 'title': return word[0].toUpperCase() + word.slice(1).toLowerCase();
      default: return word.toLowerCase();
    }
  }

  function isVowel(ch, yAsVowel) {
    if (!ch) return false;
    const c = ch.toLowerCase();
    if ('aeiou'.includes(c)) return true;
    if (yAsVowel && c === 'y') return true;
    return false;
  }

  function splitLeadingPunct(token) {
    const match = token.match(/^([\s\.,!?:;"'()\[\]{}-]*)(.*?)([\s\.,!?:;"'()\[\]{}-]*)$/);
    if (!match) return { lead: '', core: token, trail: '' };
    return { lead: match[1], core: match[2], trail: match[3] };
  }

  function pigLatinEncodeWord(word, options) {
    const { vowelRule, yAsVowel } = options;
    if (!/[A-Za-z]/.test(word)) return word;

    const caps = detectCaps(word);
    const lower = word.toLowerCase();

    // find index of first vowel
    let idx = -1;
    for (let i = 0; i < lower.length; i++) {
      if (isVowel(lower[i], yAsVowel)) {
        idx = i;
        break;
      }
    }

    let result;
    if (idx === 0 || idx === -1) {
      // starts with vowel or no vowel at all
      const suffix = vowelRule === 'way' ? 'way' : 'yay';
      result = lower + suffix;
    } else {
      const head = lower.slice(0, idx);
      const tail = lower.slice(idx);
      result = tail + head + 'ay';
    }
    return applyCaps(result, caps);
  }

  function pigLatinDecodeWord(word, options) {
    const { vowelRule, yAsVowel } = options;
    if (!/[A-Za-z]/.test(word)) return word;

    const caps = detectCaps(word);
    const lower = word.toLowerCase();

    const yaySuffix = vowelRule === 'way' ? 'way' : 'yay';
    const altSuffix = vowelRule === 'way' ? 'yay' : 'way';

    let base = lower;
    let original;

    if (base.endsWith('ay')) {
      // vowel-start case
      if (base.endsWith(yaySuffix)) {
        original = base.slice(0, -yaySuffix.length);
      } else if (base.endsWith(altSuffix)) {
        // support other dialect
        original = base.slice(0, -altSuffix.length);
      } else {
        // consonant-start case: remove 'ay' and move last consonant cluster to front
        base = base.slice(0, -2);
        // find last vowel
        let lastVowel = -1;
        for (let i = base.length - 1; i >= 0; i--) {
          if (isVowel(base[i], yAsVowel)) {
            lastVowel = i;
            break;
          }
        }
        if (lastVowel === -1 || lastVowel === base.length - 1) {
          original = base;
        } else {
          const head = base.slice(lastVowel + 1);
          const tail = base.slice(0, lastVowel + 1);
          original = head + tail;
        }
      }
    } else {
      original = lower;
    }

    return applyCaps(original, caps);
  }

  function translateText(direction, text, options) {
    if (!text.trim()) return '';
    // Split by spaces but keep punctuation via tokenization
    const tokens = text.split(/(\s+)/);
    const out = tokens.map(token => {
      if (/^\s+$/.test(token)) return token;
      const { lead, core, trail } = splitLeadingPunct(token);
      if (!core) return token;
      const translatedCore = direction === 'en-to-pig'
        ? pigLatinEncodeWord(core, options)
        : pigLatinDecodeWord(core, options);
      return lead + translatedCore + trail;
    });
    return out.join('');
  }

  function updateStats(idInput, idStats) {
    const el = document.getElementById(idInput);
    const statsEl = document.getElementById(idStats);
    if (!el || !statsEl) return;
    const text = el.value;
    const chars = text.length;
    const words = (text.trim().match(/\S+/g) || []).length;
    statsEl.textContent = chars + ' characters, ' + words + ' words';
  }

  document.addEventListener('DOMContentLoaded', function () {
    const input = document.getElementById('inputText');
    const output = document.getElementById('outputText');
    const directionSel = document.getElementById('direction');
    const vowelRuleSel = document.getElementById('vowelRule');
    const yAsVowelChk = document.getElementById('yAsVowel');
    const translateBtn = document.getElementById('translateBtn');
    const clearAllBtn = document.getElementById('clearAllBtn');
    const clearInputBtn = document.getElementById('clearInput');
    const copyOutputBtn = document.getElementById('copyOutput');
    const swapBtn = document.getElementById('swapBtn');
    const sampleBtn = document.getElementById('sampleBtn');
    const statusMessage = document.getElementById('statusMessage');

    function getOptions() {
      return {
        vowelRule: vowelRuleSel.value === 'way' ? 'way' : 'yay',
        yAsVowel: yAsVowelChk.checked
      };
    }

    function doTranslate() {
      const dir = directionSel.value;
      const txt = input.value;
      const opts = getOptions();
      const res = translateText(dir, txt, opts);
      output.value = res;
      updateStats('inputText', 'inputStats');
      updateStats('outputText', 'outputStats');
      if (txt.trim()) {
        statusMessage.textContent = dir === 'en-to-pig'
          ? 'Translated English to Pig Latin.'
          : 'Translated Pig Latin to English.';
      } else {
        statusMessage.textContent = '';
      }
    }

    translateBtn.addEventListener('click', doTranslate);
    input.addEventListener('input', () => {
      updateStats('inputText', 'inputStats');
    });

    clearAllBtn.addEventListener('click', () => {
      input.value = '';
      output.value = '';
      updateStats('inputText', 'inputStats');
      updateStats('outputText', 'outputStats');
      statusMessage.textContent = '';
    });

    clearInputBtn.addEventListener('click', () => {
      input.value = '';
      updateStats('inputText', 'inputStats');
      statusMessage.textContent = '';
    });

    copyOutputBtn.addEventListener('click', async () => {
      if (!output.value) return;
      try {
        await navigator.clipboard.writeText(output.value);
        statusMessage.textContent = 'Output copied to clipboard.';
        setTimeout(() => { if (statusMessage.textContent === 'Output copied to clipboard.') statusMessage.textContent = ''; }, 2000);
      } catch (e) {
        statusMessage.textContent = 'Unable to copy. Please copy manually.';
      }
    });

    swapBtn.addEventListener('click', () => {
      const tmp = input.value;
      input.value = output.value;
      output.value = tmp;
      // flip direction
      directionSel.value = directionSel.value === 'en-to-pig' ? 'pig-to-en' : 'en-to-pig';
      updateStats('inputText', 'inputStats');
      updateStats('outputText', 'outputStats');
      statusMessage.textContent = 'Swapped input and output.';
    });

    sampleBtn.addEventListener('click', () => {
      input.value = "Hello, this is a secret Pig Latin message. Can you understand it?";
      updateStats('inputText', 'inputStats');
      doTranslate();
    });

    directionSel.addEventListener('change', () => {
      statusMessage.textContent = '';
    });
    vowelRuleSel.addEventListener('change', () => {
      statusMessage.textContent = '';
    });
    yAsVowelChk.addEventListener('change', () => {
      statusMessage.textContent = '';
    });

    // initial stats
    updateStats('inputText', 'inputStats');
    updateStats('outputText', 'outputStats');
  });
</script>

