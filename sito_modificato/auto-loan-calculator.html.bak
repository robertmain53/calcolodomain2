      // Core amortization calculation
      function calcLoan(principal, annualRate, months, extraMonthly = 0) {
        principal = Math.max(0, principal);
        months = Math.max(1, months);
        const r = annualRate / 100 / 12;
        let payment;

        if (r === 0) {
          payment = principal / months;
        } else {
          const pow = Math.pow(1 + r, months);
          payment = (principal * (r * pow)) / (pow - 1);
        }

        const schedule = [];
        let balance = principal;
        let totalInterest = 0;
        let totalPaid = 0;
        let m = 0;

        while (balance > 0.01 && m < 6000) {
          // safety cap
          m++;
          const thisPayment = Math.min(
            balance + balance * r,
            payment + extraMonthly
          );
          const interest = balance * r;
          const principalPaid = thisPayment - interest;
          balance = balance - principalPaid;
          totalInterest += interest;
          totalPaid += thisPayment;

          schedule.push({
            month: m,
            payment: thisPayment,
            principal: principalPaid,
            interest: interest,
            balance: Math.max(0, balance),
          });

          if (m >= months && extraMonthly <= 0 && Math.abs(balance) < 0.01)
            break;
        }

        return {
          payment,
          totalInterest,
          totalPaid,
          months: schedule.length,
          schedule,
        };
      }

      function buildAmortizationSummary(schedule, payment) {
        amortBody.innerHTML = "";
        if (!schedule.length) return;

        const byYear = {};
        schedule.forEach((row) => {
          const year = Math.ceil(row.month / 12);
          if (!byYear[year]) {
            byYear[year] = {
              paid: 0,
              principal: 0,
              interest: 0,
              balance: row.balance,
            };
          }
          byYear[year].paid += row.payment;
          byYear[year].principal += row.principal;
          byYear[year].interest += row.interest;
          byYear[year].balance = row.balance;
        });

        Object.keys(byYear).forEach((year) => {
          const y = byYear[year];
          const tr = document.createElement("tr");
          tr.className = "odd:bg-white even:bg-gray-50";
          tr.innerHTML = `
        <td class="px-2 py-1">Year ${year}</td>
        <td class="px-2 py-1 text-right">${fmtMoney(y.paid)}</td>
        <td class="px-2 py-1 text-right">${fmtMoney(y.principal)}</td>
        <td class="px-2 py-1 text-right">${fmtMoney(y.interest)}</td>
        <td class="px-2 py-1 text-right">${fmtMoney(y.balance)}</td>
      `;
          amortBody.appendChild(tr);
        });
      }

      function recalcPayment() {
        const price = parseFloat(priceEl.value) || 0;
        const down = parseFloat(downEl.value) || 0;
        const trade = parseFloat(tradeEl.value) || 0;
        const rebates = parseFloat(rebatesEl.value) || 0;
        const fees = parseFloat(feesEl.value) || 0;
        const apr = parseFloat(aprEl.value) || 0;
        const term = parseInt(termEl.value, 10) || 0;
        const extra = parseFloat(extraEl.value) || 0;

        const principal = Math.max(0, price + fees - down - trade - rebates);

        const base = calcLoan(principal, apr, term, 0);
        const withExtra =
          extra > 0 ? calcLoan(principal, apr, term, extra) : null;

        resPayment.textContent = fmtMoney2(base.payment);
        resFinanced.textContent = fmtMoney(principal);
        resTotalPaid.textContent = fmtMoney(base.totalPaid);
        resInterest.textContent = fmtMoney(base.totalInterest);

        const years = base.months / 12;
        resTerm.textContent = `${base.months} mo (${years.toFixed(1)} yrs)`;

        if (withExtra) {
          resPaymentExtraWrap.classList.remove("hidden");
          resPaymentWithExtra.textContent = fmtMoney2(base.payment + extra);
          const yearsExtra = withExtra.months / 12;
          const savedMonths = base.months - withExtra.months;
          const savedInterest = base.totalInterest - withExtra.totalInterest;
          resTermExtra.classList.remove("hidden");
          resTermExtra.textContent = `With extra: ${
            withExtra.months
          } mo (${yearsExtra.toFixed(
            1
          )} yrs), saving ${savedMonths} mo and ${fmtMoney(
            savedInterest
          )} interest.`;
        } else {
          resPaymentExtraWrap.classList.add("hidden");
          resTermExtra.classList.add("hidden");
          resTermExtra.textContent = "";
        }

        if (base.schedule.length) {
          const first = base.schedule[0];
          resFirstPrincipal.textContent = fmtMoney2(first.principal);
          resFirstInterest.textContent = fmtMoney2(first.interest);
        } else {
          resFirstPrincipal.textContent = "$0.00";
          resFirstInterest.textContent = "$0.00";
        }

        buildAmortizationSummary(base.schedule, base.payment);
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", recalcPayment);
      [
        priceEl,
        downEl,
        tradeEl,
        rebatesEl,
        feesEl,
        aprEl,
        termEl,
        extraEl,
      ].forEach((el) => {
        el.addEventListener("change", recalcPayment);
      });

      // Affordability tab
      const budgetPaymentEl = document.getElementById("budgetPayment");
      const affordApr = document.getElementById("affordApr");
      const affordTerm = document.getElementById("affordTerm");
      const affordDown = document.getElementById("affordDown");
      const affordTrade = document.getElementById("affordTrade");
      const affordFees = document.getElementById("affordFees");
      const affordAprDisplay = document.getElementById("affordAprDisplay");
      const affordTermDisplay = document.getElementById("affordTermDisplay");

      const affordMaxPrice = document.getElementById("affordMaxPrice");
      const affordMaxLoan = document.getElementById("affordMaxLoan");
      const affordInterest = document.getElementById("affordInterest");

      affordApr.addEventListener("input", updateSlidersDisplay);
      affordTerm.addEventListener("input", updateSlidersDisplay);

      function recalcAfford() {
        const M = parseFloat(budgetPaymentEl.value) || 0;
        const apr = parseFloat(affordApr.value) || 0;
        const n = parseInt(affordTerm.value, 10) || 0;
        const down = parseFloat(affordDown.value) || 0;
        const trade = parseFloat(affordTrade.value) || 0;
        const fees = parseFloat(affordFees.value) || 0;

        const r = apr / 100 / 12;
        let P;
        if (r === 0) {
          P = M * n;
        } else {
          const pow = Math.pow(1 + r, n);
          P = (M * (pow - 1)) / (r * pow);
        }
        P = Math.max(0, P);

        const maxPrice = Math.max(0, P + down + trade - fees);

        // Interest estimate using forward calculation
        const est = calcLoan(P, apr, n, 0);

        affordMaxLoan.textContent = fmtMoney(P);
        affordMaxPrice.textContent = fmtMoney(maxPrice);
        affordInterest.textContent = fmtMoney(est.totalInterest);
      }

      document
        .getElementById("affordBtn")
        .addEventListener("click", recalcAfford);
      [
        budgetPaymentEl,
        affordApr,
        affordTerm,
        affordDown,
        affordTrade,
        affordFees,
      ].forEach((el) => {
        el.addEventListener("change", recalcAfford);
      });

      // Initial render
      updateSlidersDisplay();
      recalcPayment();
      recalcAfford();

      // Mobile menu script (simple)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const isHidden = mobileMenu.classList.contains("hidden");
          mobileMenu.classList.toggle("hidden", !isHidden);
          mobileToggle.setAttribute("aria-expanded", String(isHidden));
        });
      }

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
