    <script>
      // Utility functions
      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function mlToOz(ml) {
        return ml / 29.5735;
      }

      function mlToCups(ml) {
        return ml / 240; // standard nutrition cup
      }

      function kgFromLb(lb) {
        return lb / 2.2046;
      }

      function formatVolume(ml, system) {
        const liters = ml / 1000;
        const oz = mlToOz(ml);
        const cups = mlToCups(ml);
        if (system === "metric") {
          return `${round(liters, 2)} L (${Math.round(ml)} mL)`;
        } else if (system === "us") {
          return `${Math.round(oz)} fl oz (${round(cups, 1)} cups)`;
        } else {
          return `${round(liters, 2)} L / ${Math.round(oz)} fl oz`;
        }
      }

      function calculateWaterIntake() {
        const unitSystem = document.querySelector(
          'input[name="unitSystem"]:checked'
        ).value;
        const outputUnits = document.querySelector(
          'input[name="outputUnits"]:checked'
        ).value;
        const weightInput = parseFloat(document.getElementById("weight").value);
        const age = parseInt(document.getElementById("age").value, 10);
        const sex = document.getElementById("sex").value;
        const activity = document.getElementById("activity").value;
        const climate = document.getElementById("climate").value;
        const pregnant = document.getElementById("pregnant").value === "yes";
        const breastfeeding =
          document.getElementById("breastfeeding").value === "yes";
        const exerciseMinutes =
          parseFloat(document.getElementById("exerciseMinutes").value) || 0;

        if (!weightInput || weightInput <= 0 || !age || age <= 0) {
          alert("Please enter a valid weight and age.");
          return;
        }

        // Convert weight to kg
        const weightKg =
          unitSystem === "metric" ? weightInput : kgFromLb(weightInput);

        // Baseline range (mL)
        let baselineLow = 30 * weightKg;
        let baselineHigh = 40 * weightKg;

        // Activity adjustment (L)
        let activityAdjL = 0;
        switch (activity) {
          case "light":
            activityAdjL = 0.2;
            break;
          case "moderate":
            activityAdjL = 0.5;
            break;
          case "high":
            activityAdjL = 0.8;
            break;
          case "athlete":
            activityAdjL = 1.0;
            break;
          default:
            activityAdjL = 0;
        }

        // Climate adjustment (L)
        let climateAdjL = 0;
        if (climate === "temperate") climateAdjL = 0.25;
        if (climate === "hot") climateAdjL = 0.5;

        // Pregnancy / breastfeeding (L)
        let pregAdjL = 0;
        if (pregnant) pregAdjL += 0.3;
        if (breastfeeding) pregAdjL += 0.7;

        // Extra exercise (mL) ~ 350 mL per 30 min
        const exerciseAdjMl = (exerciseMinutes / 30) * 350;

        // Convert L adjustments to mL
        const activityAdjMl = activityAdjL * 1000;
        const climateAdjMl = climateAdjL * 1000;
        const pregAdjMl = pregAdjL * 1000;

        // Total adjustments
        const totalAdjMl =
          activityAdjMl + climateAdjMl + pregAdjMl + exerciseAdjMl;

        // Final range
        let totalLowMl = baselineLow + totalAdjMl;
        let totalHighMl = baselineHigh + totalAdjMl;

        // Age-based soft cap for very high values (not strict, just to avoid unrealistic numbers)
        const maxReasonableMl = age < 65 ? 6000 : 5000; // 6 L or 5 L
        totalLowMl = Math.min(totalLowMl, maxReasonableMl);
        totalHighMl = Math.min(totalHighMl, maxReasonableMl);

        // Update UI
        const resultsSection = document.getElementById("results-section");
        resultsSection.classList.remove("hidden");

        const rangeMain = document.getElementById("range-main");
        const rangeSecondary = document.getElementById("range-secondary");
        const rangeNote = document.getElementById("range-note");

        const lowL = totalLowMl / 1000;
        const highL = totalHighMl / 1000;

        // Main line in preferred units
        if (outputUnits === "metric") {
          rangeMain.textContent = `${round(lowL, 2)} – ${round(
            highL,
            2
          )} L / day`;
          rangeSecondary.textContent = `${Math.round(
            totalLowMl
          )} – ${Math.round(totalHighMl)} mL per day`;
        } else if (outputUnits === "us") {
          const lowOz = mlToOz(totalLowMl);
          const highOz = mlToOz(totalHighMl);
          const lowCups = mlToCups(totalLowMl);
          const highCups = mlToCups(totalHighMl);
          rangeMain.textContent = `${Math.round(lowOz)} – ${Math.round(
            highOz
          )} fl oz / day`;
          rangeSecondary.textContent = `${round(lowCups, 1)} – ${round(
            highCups,
            1
          )} cups per day`;
        } else {
          const lowOz = mlToOz(totalLowMl);
          const highOz = mlToOz(totalHighMl);
          rangeMain.textContent = `${round(lowL, 2)} – ${round(
            highL,
            2
          )} L / day`;
          rangeSecondary.textContent = `${Math.round(lowOz)} – ${Math.round(
            highOz
          )} fl oz per day`;
        }

        rangeNote.textContent =
          "This is an estimated range for total fluid from all sources (water, other drinks, and food). Adjust based on thirst, urine color, and how you feel.";

        // Breakdown
        document.getElementById("baseline-text").textContent = `${round(
          baselineLow / 1000,
          2
        )} – ${round(baselineHigh / 1000, 2)} L (weight-based)`;

        document.getElementById("activity-text").textContent =
          activityAdjL > 0 ? `+${round(activityAdjL, 2)} L` : "+0 L";

        document.getElementById("climate-text").textContent =
          climateAdjL > 0 ? `+${round(climateAdjL, 2)} L` : "+0 L";

        document.getElementById("pregnancy-text").textContent =
          pregAdjL > 0 ? `+${round(pregAdjL, 2)} L` : "+0 L";

        document.getElementById("exercise-text").textContent =
          exerciseAdjMl > 0
            ? `+${round(exerciseAdjMl / 1000, 2)} L (${Math.round(
                exerciseMinutes
              )} min)`
            : "+0 L";

        // Schedule: split into 6 times (on wake, mid-morning, lunch, mid-afternoon, dinner, evening)
        const scheduleBody = document.getElementById("schedule-body");
        scheduleBody.innerHTML = "";

        const avgMl = (totalLowMl + totalHighMl) / 2;
        const portions = 6;
        const perPortionMl = avgMl / portions;

        const times = [
          "On waking",
          "Mid-morning",
          "With lunch",
          "Mid-afternoon",
          "With dinner",
          "Evening",
        ];
        times.forEach((label) => {
          const tr = document.createElement("tr");
          const tdTime = document.createElement("td");
          const tdAmount = document.createElement("td");
          tdTime.className = "px-3 py-2 whitespace-nowrap text-gray-700";
          tdAmount.className = "px-3 py-2 whitespace-nowrap text-gray-700";

          tdTime.textContent = label;
          tdAmount.textContent = formatVolume(
            perPortionMl,
            outputUnits === "both" ? "both" : outputUnits
          );

          tr.appendChild(tdTime);
          tr.appendChild(tdAmount);
          scheduleBody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        const unitRadios = document.querySelectorAll(
          'input[name="unitSystem"]'
        );
        const weightUnitSpan = document.getElementById("weight-unit");
        const weightInput = document.getElementById("weight");

        unitRadios.forEach((radio) => {
          radio.addEventListener("change", () => {
            if (radio.checked) {
              if (radio.value === "metric") {
                // Convert lb to kg if current value seems like lb
                if (parseFloat(weightInput.value) > 140) {
                  const kg = kgFromLb(parseFloat(weightInput.value));
                  weightInput.value = Math.round(kg);
                }
                weightUnitSpan.textContent = "kg";
              } else {
                // Convert kg to lb if current value seems like kg
                if (parseFloat(weightInput.value) < 140) {
                  const lb = parseFloat(weightInput.value) * 2.2046;
                  weightInput.value = Math.round(lb);
                }
                weightUnitSpan.textContent = "lb";
              }
            }
          });
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateWaterIntake);

        document.getElementById("reset-btn").addEventListener("click", () => {
          document.getElementById("water-intake-form").reset();
          // Restore defaults
          document.querySelector(
            'input[name="unitSystem"][value="metric"]'
          ).checked = true;
          document.querySelector(
            'input[name="outputUnits"][value="metric"]'
          ).checked = true;
          weightUnitSpan.textContent = "kg";
          document.getElementById("weight").value = 70;
          document.getElementById("age").value = 30;
          document.getElementById("activity").value = "moderate";
          document.getElementById("climate").value = "temperate";
          document.getElementById("pregnant").value = "no";
          document.getElementById("breastfeeding").value = "no";
          document.getElementById("exerciseMinutes").value = 30;
          document.getElementById("results-section").classList.add("hidden");
        });

        const faqContainer = document.getElementById("faq-container");
        if (faqContainer) {
          faqContainer.addEventListener("click", function (e) {
            const btn = e.target.closest(".faq-question");
            if (!btn) return;
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector(".faq-icon");
            if (answer.classList.contains("hidden")) {
              answer.classList.remove("hidden");
              icon.classList.add("transform", "rotate-180");
            } else {
              answer.classList.add("hidden");
              icon.classList.remove("transform", "rotate-180");
            }
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
