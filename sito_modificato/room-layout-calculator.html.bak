    <script>
      // Room layout calculator logic
      (function () {
        const canvas = document.getElementById("room-canvas");
        const ctx = canvas.getContext("2d");

        const roomLengthInput = document.getElementById("room-length");
        const roomWidthInput = document.getElementById("room-width");
        const unitSelect = document.getElementById("unit-select");
        const updateRoomBtn = document.getElementById("update-room");
        const unitLabelLength = document.getElementById("unit-label-length");
        const unitLabelWidth = document.getElementById("unit-label-width");

        const roomAreaEl = document.getElementById("room-area");
        const roomDimLabelEl = document.getElementById("room-dim-label");
        const furnitureAreaEl = document.getElementById("furniture-area");
        const furniturePercentEl = document.getElementById("furniture-percent");
        const clearanceScoreEl = document.getElementById("clearance-score");
        const clearanceNoteEl = document.getElementById("clearance-note");

        const toolButtons = document.querySelectorAll("[data-tool]");
        const toggleClearanceBtn = document.getElementById("toggle-clearance");
        const presetButtons = document.querySelectorAll(".preset-btn");

        const noSelectionEl = document.getElementById("no-selection");
        const selectionFieldsEl = document.getElementById("selection-fields");
        const selNameEl = document.getElementById("sel-name");
        const selLengthEl = document.getElementById("sel-length");
        const selWidthEl = document.getElementById("sel-width");
        const selXEl = document.getElementById("sel-x");
        const selYEl = document.getElementById("sel-y");
        const selRotationEl = document.getElementById("sel-rotation");
        const deleteItemBtn = document.getElementById("delete-item");

        const copySummaryBtn = document.getElementById("copy-summary");
        const copyFeedbackEl = document.getElementById("copy-feedback");

        let currentTool = "select";
        let showClearance = false;

        // Room and items state
        let room = {
          length: 16,
          width: 12,
          unit: "ft",
          scale: 20, // pixels per unit (approx, adjusted to fit canvas)
        };

        let items = [];
        let selectedId = null;

        let isDragging = false;
        let dragOffset = { x: 0, y: 0 };
        let isResizing = false;
        let resizeHandle = null;

        // Utility
        function toNumber(value, fallback) {
          const n = parseFloat(value);
          return isNaN(n) ? fallback : n;
        }

        function updateScale() {
          // Fit room into canvas with margins
          const margin = 40;
          const maxWidth = canvas.width - margin * 2;
          const maxHeight = canvas.height - margin * 2;
          const scaleX = maxWidth / room.length;
          const scaleY = maxHeight / room.width;
          room.scale = Math.min(scaleX, scaleY);
        }

        function roomToCanvas(x, y) {
          const margin = 40;
          return {
            x: margin + x * room.scale,
            y: margin + y * room.scale,
          };
        }

        function canvasToRoom(px, py) {
          const margin = 40;
          return {
            x: (px - margin) / room.scale,
            y: (py - margin) / room.scale,
          };
        }

        function addItem(name, length, width) {
          const id = Date.now() + Math.random();
          // Place in center
          const x = room.length / 2;
          const y = room.width / 2;
          items.push({
            id,
            name,
            length,
            width,
            x,
            y,
            rotation: 0,
            type: "furniture",
          });
          selectedId = id;
          redraw();
          updateSummary();
          updateSelectionPanel();
        }

        function addDoorOrWindow(type) {
          const id = Date.now() + Math.random();
          const length = type === "door" ? 3 : 4;
          const width = type === "door" ? 0.3 : 0.2;
          const x = room.length / 2;
          const y = 0; // on top wall
          items.push({
            id,
            name: type === "door" ? "Door" : "Window",
            length,
            width,
            x,
            y,
            rotation: 0,
            type,
          });
          selectedId = id;
          redraw();
          updateSummary();
          updateSelectionPanel();
        }

        function getItemById(id) {
          return items.find((i) => i.id === id) || null;
        }

        function getSelectedItem() {
          return getItemById(selectedId);
        }

        function clearCanvas() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        function drawRoom() {
          const margin = 40;
          const topLeft = roomToCanvas(0, 0);
          const bottomRight = roomToCanvas(room.length, room.width);

          // Grid is background via CSS

          // Room rectangle
          ctx.save();
          ctx.strokeStyle = "#4b5563";
          ctx.lineWidth = 2;
          ctx.strokeRect(
            topLeft.x,
            topLeft.y,
            bottomRight.x - topLeft.x,
            bottomRight.y - topLeft.y
          );

          // Dimension labels
          ctx.fillStyle = "#374151";
          ctx.font = "12px Inter, system-ui, sans-serif";
          ctx.textAlign = "center";
          ctx.textBaseline = "bottom";
          ctx.fillText(
            `${room.length.toFixed(1)} ${room.unit}`,
            (topLeft.x + bottomRight.x) / 2,
            topLeft.y - 8
          );

          ctx.save();
          ctx.translate(topLeft.x - 8, (topLeft.y + bottomRight.y) / 2);
          ctx.rotate(-Math.PI / 2);
          ctx.fillText(`${room.width.toFixed(1)} ${room.unit}`, 0, 0);
          ctx.restore();

          ctx.restore();
        }

        function drawItem(item) {
          const center = roomToCanvas(item.x, item.y);
          const w = item.length * room.scale;
          const h = item.width * room.scale;

          ctx.save();
          ctx.translate(center.x, center.y);
          ctx.rotate((item.rotation * Math.PI) / 180);

          // Style by type
          if (item.type === "door") {
            ctx.fillStyle = "rgba(59, 130, 246, 0.15)";
            ctx.strokeStyle = "#2563eb";
            ctx.setLineDash([4, 3]);
          } else if (item.type === "window") {
            ctx.fillStyle = "rgba(16, 185, 129, 0.12)";
            ctx.strokeStyle = "#059669";
            ctx.setLineDash([4, 3]);
          } else {
            ctx.fillStyle = "rgba(37, 99, 235, 0.08)";
            ctx.strokeStyle = "#4b5563";
          }

          ctx.lineWidth = selectedId === item.id ? 2 : 1.2;
          ctx.beginPath();
          ctx.rect(-w / 2, -h / 2, w, h);
          ctx.fill();
          ctx.stroke();

          // Name label
          ctx.fillStyle = "#111827";
          ctx.font = "11px Inter, system-ui, sans-serif";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";
          ctx.fillText(item.name, 0, 0);

          // Selection handles
          if (selectedId === item.id) {
            ctx.fillStyle = "#2563eb";
            const handleSize = 6;
            ctx.fillRect(
              -w / 2 - handleSize,
              0 - handleSize / 2,
              handleSize,
              handleSize
            ); // left
            ctx.fillRect(w / 2, 0 - handleSize / 2, handleSize, handleSize); // right
            ctx.fillRect(
              0 - handleSize / 2,
              -h / 2 - handleSize,
              handleSize,
              handleSize
            ); // top
            ctx.fillRect(0 - handleSize / 2, h / 2, handleSize, handleSize); // bottom
          }

          ctx.restore();
        }

        function drawClearanceOverlay() {
          if (!showClearance) return;
          // Simple overlay: highlight central walking band
          const margin = 40;
          const topLeft = roomToCanvas(0, 0);
          const bottomRight = roomToCanvas(room.length, room.width);

          ctx.save();
          ctx.fillStyle = "rgba(16, 185, 129, 0.08)";
          ctx.fillRect(
            topLeft.x + 20,
            topLeft.y + 20,
            bottomRight.x - topLeft.x - 40,
            bottomRight.y - topLeft.y - 40
          );
          ctx.restore();
        }

        function redraw() {
          clearCanvas();
          drawRoom();
          drawClearanceOverlay();
          items.forEach(drawItem);
        }

        function computeAreas() {
          const roomArea = room.length * room.width;
          let furnitureArea = 0;
          items.forEach((item) => {
            if (item.type === "furniture") {
              furnitureArea += item.length * item.width;
            }
          });
          const freeArea = Math.max(roomArea - furnitureArea, 0);
          return { roomArea, furnitureArea, freeArea };
        }

        function computeClearanceScore(areas) {
          const { roomArea, furnitureArea, freeArea } = areas;
          if (roomArea <= 0)
            return {
              label: "–",
              note: "Enter room dimensions to see clearance.",
            };
          if (furnitureArea === 0)
            return {
              label: "–",
              note: "Add furniture to estimate walking space.",
            };

          const usedPercent = furnitureArea / roomArea;
          const freePercent = freeArea / roomArea;

          let label, note;
          if (freePercent >= 0.6 && usedPercent <= 0.35) {
            label = "Excellent";
            note = "Plenty of free floor area and generous walking paths.";
          } else if (freePercent >= 0.45 && usedPercent <= 0.5) {
            label = "Good";
            note = "Comfortable layout with adequate walking space.";
          } else if (freePercent >= 0.3) {
            label = "Tight";
            note =
              "Functional but some paths may feel narrow. Consider removing or shrinking items.";
          } else {
            label = "Crowded";
            note =
              "Very little free space. Reconsider furniture sizes or arrangement.";
          }
          return { label, note };
        }

        function formatArea(value) {
          const unit = room.unit === "ft" ? "ft²" : "m²";
          return `${value.toFixed(1)} ${unit}`;
        }

        function updateSummary() {
          const { roomArea, furnitureArea, freeArea } = computeAreas();
          roomAreaEl.textContent = formatArea(roomArea);
          roomDimLabelEl.textContent = `${room.length.toFixed(
            1
          )} × ${room.width.toFixed(1)} ${room.unit}`;
          furnitureAreaEl.textContent = formatArea(furnitureArea);
          const percent = roomArea > 0 ? (furnitureArea / roomArea) * 100 : 0;
          furniturePercentEl.textContent = `${percent.toFixed(
            1
          )}% of room area`;

          const clearance = computeClearanceScore({
            roomArea,
            furnitureArea,
            freeArea,
          });
          clearanceScoreEl.textContent = clearance.label;
          clearanceNoteEl.textContent = clearance.note;
        }

        function setTool(tool) {
          currentTool = tool;
          toolButtons.forEach((btn) => {
            if (btn.dataset.tool === tool) {
              btn.classList.add("tool-button-active");
            } else {
              btn.classList.remove("tool-button-active");
            }
          });
        }

        // Hit testing
        function hitTestItem(px, py) {
          // Check from topmost
          for (let i = items.length - 1; i >= 0; i--) {
            const item = items[i];
            const center = roomToCanvas(item.x, item.y);
            const dx = px - center.x;
            const dy = py - center.y;
            const angle = (-item.rotation * Math.PI) / 180;
            const rx = dx * Math.cos(angle) - dy * Math.sin(angle);
            const ry = dx * Math.sin(angle) + dy * Math.cos(angle);
            const halfW = (item.length * room.scale) / 2;
            const halfH = (item.width * room.scale) / 2;
            if (rx >= -halfW && rx <= halfW && ry >= -halfH && ry <= halfH) {
              return { item, local: { x: rx, y: ry } };
            }
          }
          return null;
        }

        function hitTestHandle(item, px, py) {
          const center = roomToCanvas(item.x, item.y);
          const dx = px - center.x;
          const dy = py - center.y;
          const angle = (-item.rotation * Math.PI) / 180;
          const rx = dx * Math.cos(angle) - dy * Math.sin(angle);
          const ry = dx * Math.sin(angle) + dy * Math.cos(angle);
          const w = item.length * room.scale;
          const h = item.width * room.scale;
          const handleSize = 8;

          const handles = [
            { name: "left", x: -w / 2 - handleSize / 2, y: 0 - handleSize / 2 },
            { name: "right", x: w / 2 - handleSize / 2, y: 0 - handleSize / 2 },
            { name: "top", x: 0 - handleSize / 2, y: -h / 2 - handleSize / 2 },
            {
              name: "bottom",
              x: 0 - handleSize / 2,
              y: h / 2 - handleSize / 2,
            },
          ];

          for (const hnd of handles) {
            if (
              rx >= hnd.x &&
              rx <= hnd.x + handleSize &&
              ry >= hnd.y &&
              ry <= hnd.y + handleSize
            ) {
              return hnd.name;
            }
          }
          return null;
        }

        // Selection panel
        function updateSelectionPanel() {
          const item = getSelectedItem();
          if (!item) {
            noSelectionEl.classList.remove("hidden");
            selectionFieldsEl.classList.add("hidden");
            return;
          }
          noSelectionEl.classList.add("hidden");
          selectionFieldsEl.classList.remove("hidden");
          selNameEl.textContent = item.name;
          selLengthEl.value = item.length.toFixed(2);
          selWidthEl.value = item.width.toFixed(2);
          selXEl.value = item.x.toFixed(2);
          selYEl.value = item.y.toFixed(2);
          selRotationEl.value = item.rotation.toFixed(0);
        }

        function applySelectionChanges() {
          const item = getSelectedItem();
          if (!item) return;
          item.length = Math.max(0.5, toNumber(selLengthEl.value, item.length));
          item.width = Math.max(0.5, toNumber(selWidthEl.value, item.width));
          item.x = Math.min(
            Math.max(0, toNumber(selXEl.value, item.x)),
            room.length
          );
          item.y = Math.min(
            Math.max(0, toNumber(selYEl.value, item.y)),
            room.width
          );
          item.rotation =
            ((toNumber(selRotationEl.value, item.rotation) % 360) + 360) % 360;
          redraw();
          updateSummary();
        }

        // Event handlers
        toolButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const tool = btn.dataset.tool;
            if (tool === "door") {
              addDoorOrWindow("door");
              setTool("select");
            } else if (tool === "window") {
              addDoorOrWindow("window");
              setTool("select");
            } else if (tool === "draw-rect") {
              setTool("draw-rect");
            } else {
              setTool("select");
            }
          });
        });

        toggleClearanceBtn.addEventListener("click", () => {
          showClearance = !showClearance;
          if (showClearance) {
            toggleClearanceBtn.classList.add("tool-button-active");
            toggleClearanceBtn.textContent = "Hide clearance overlay";
          } else {
            toggleClearanceBtn.classList.remove("tool-button-active");
            toggleClearanceBtn.textContent = "Show clearance overlay";
          }
          redraw();
        });

        presetButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const name = btn.dataset.name;
            let l = parseFloat(btn.dataset.l);
            let w = parseFloat(btn.dataset.w);
            if (room.unit === "m") {
              // Presets are in feet; convert to meters
              l = l * 0.3048;
              w = w * 0.3048;
            }
            addItem(name, l, w);
          });
        });

        updateRoomBtn.addEventListener("click", () => {
          const length = toNumber(roomLengthInput.value, room.length);
          const width = toNumber(roomWidthInput.value, room.width);
          const unit = unitSelect.value === "m" ? "m" : "ft";

          room.length = Math.max(1, length);
          room.width = Math.max(1, width);

          // If unit changed, convert existing items
          if (unit !== room.unit) {
            const factor = unit === "m" ? 0.3048 : 1 / 0.3048;
            items.forEach((item) => {
              item.length *= factor;
              item.width *= factor;
              item.x *= factor;
              item.y *= factor;
            });
          }

          room.unit = unit;
          unitLabelLength.textContent = unit;
          unitLabelWidth.textContent = unit;

          updateScale();
          redraw();
          updateSummary();
          updateSelectionPanel();
        });

        // Canvas interactions
        canvas.addEventListener("mousedown", (e) => {
          const rect = canvas.getBoundingClientRect();
          const px = e.clientX - rect.left;
          const py = e.clientY - rect.top;

          if (currentTool === "draw-rect") {
            // Add a default custom rectangle at clicked position
            const roomPos = canvasToRoom(px, py);
            const id = Date.now() + Math.random();
            items.push({
              id,
              name: "Custom",
              length: room.length * 0.2,
              width: room.width * 0.15,
              x: Math.min(Math.max(0, roomPos.x), room.length),
              y: Math.min(Math.max(0, roomPos.y), room.width),
              rotation: 0,
              type: "furniture",
            });
            selectedId = id;
            setTool("select");
            redraw();
            updateSummary();
            updateSelectionPanel();
            return;
          }

          const hit = hitTestItem(px, py);
          if (hit) {
            selectedId = hit.item.id;
            updateSelectionPanel();
            const handle = hitTestHandle(hit.item, px, py);
            if (handle) {
              isResizing = true;
              resizeHandle = handle;
            } else {
              isDragging = true;
              const roomPos = canvasToRoom(px, py);
              dragOffset.x = roomPos.x - hit.item.x;
              dragOffset.y = roomPos.y - hit.item.y;
            }
            redraw();
          } else {
            selectedId = null;
            updateSelectionPanel();
            redraw();
          }
        });

        canvas.addEventListener("mousemove", (e) => {
          if (!isDragging && !isResizing) return;
          const item = getSelectedItem();
          if (!item) return;

          const rect = canvas.getBoundingClientRect();
          const px = e.clientX - rect.left;
          const py = e.clientY - rect.top;
          const roomPos = canvasToRoom(px, py);

          if (isDragging) {
            item.x = Math.min(
              Math.max(0, roomPos.x - dragOffset.x),
              room.length
            );
            item.y = Math.min(
              Math.max(0, roomPos.y - dragOffset.y),
              room.width
            );
          } else if (isResizing) {
            const center = { x: item.x, y: item.y };
            const dx = roomPos.x - center.x;
            const dy = roomPos.y - center.y;
            const angle = (-item.rotation * Math.PI) / 180;
            const rx = dx * Math.cos(angle) - dy * Math.sin(angle);
            const ry = dx * Math.sin(angle) + dy * Math.cos(angle);

            if (resizeHandle === "left" || resizeHandle === "right") {
              const newHalf = Math.abs(rx);
              item.length = Math.max(0.5, newHalf * 2);
            } else if (resizeHandle === "top" || resizeHandle === "bottom") {
              const newHalf = Math.abs(ry);
              item.width = Math.max(0.5, newHalf * 2);
            }
          }

          redraw();
          updateSummary();
          updateSelectionPanel();
        });

        window.addEventListener("mouseup", () => {
          isDragging = false;
          isResizing = false;
          resizeHandle = null;
        });

        // Selection field changes
        [selLengthEl, selWidthEl, selXEl, selYEl, selRotationEl].forEach(
          (input) => {
            input.addEventListener("change", applySelectionChanges);
          }
        );

        deleteItemBtn.addEventListener("click", () => {
          if (!selectedId) return;
          items = items.filter((i) => i.id !== selectedId);
          selectedId = null;
          redraw();
          updateSummary();
          updateSelectionPanel();
        });

        // Copy summary
        copySummaryBtn.addEventListener("click", async () => {
          const { roomArea, furnitureArea, freeArea } = computeAreas();
          const unit = room.unit;
          const areaUnit = unit === "ft" ? "ft²" : "m²";
          const percent = roomArea > 0 ? (furnitureArea / roomArea) * 100 : 0;
          const clearance = computeClearanceScore({
            roomArea,
            furnitureArea,
            freeArea,
          });

          let text = "";
          text += `Room layout summary\n`;
          text += `-------------------\n`;
          text += `Room size: ${room.length.toFixed(2)} × ${room.width.toFixed(
            2
          )} ${unit}\n`;
          text += `Room area: ${roomArea.toFixed(2)} ${areaUnit}\n`;
          text += `Furniture area: ${furnitureArea.toFixed(
            2
          )} ${areaUnit} (${percent.toFixed(1)}% of room)\n`;
          text += `Estimated clearance: ${clearance.label} – ${clearance.note}\n\n`;
          text += `Items:\n`;
          if (items.length === 0) {
            text += `  (no items)\n`;
          } else {
            items.forEach((item, idx) => {
              text += `  ${idx + 1}. ${item.name} – ${item.length.toFixed(
                2
              )} × ${item.width.toFixed(2)} ${unit}, `;
              text += `center at (${item.x.toFixed(2)}, ${item.y.toFixed(
                2
              )} ${unit}), rotation ${item.rotation.toFixed(0)}°\n`;
            });
          }

          try {
            await navigator.clipboard.writeText(text);
            copyFeedbackEl.classList.remove("hidden");
            setTimeout(() => copyFeedbackEl.classList.add("hidden"), 2000);
          } catch (err) {
            alert(
              "Could not copy to clipboard. Please select and copy manually:\n\n" +
                text
            );
          }
        });

        // Initial setup
        updateScale();
        redraw();
        updateSummary();
      })();
    </script>

