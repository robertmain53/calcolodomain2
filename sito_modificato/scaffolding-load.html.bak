    <script>
      // Utility: format numbers with units
      function formatValue(value, unitSystem, type) {
        if (isNaN(value)) return "–";
        if (type === "area") {
          return unitSystem === "imperial"
            ? value.toFixed(1) + " ft²"
            : value.toFixed(2) + " m²";
        }
        if (type === "force") {
          if (unitSystem === "imperial") {
            return value.toFixed(0) + " lb";
          } else {
            // convert lb to kg for display
            const kg = value / 2.20462;
            return kg.toFixed(0) + " kg";
          }
        }
        if (type === "udl") {
          if (unitSystem === "imperial") {
            return value.toFixed(1) + " lb/ft²";
          } else {
            // convert lb/ft² to kN/m²
            const kNm2 = value * 0.0478803;
            return kNm2.toFixed(2) + " kN/m²";
          }
        }
        return value.toString();
      }

      function updateUnitLabels() {
        const unitSystem = document.getElementById("unitSystem").value;
        document.getElementById("bayLengthUnit").textContent =
          unitSystem === "imperial" ? "(ft)" : "(m)";
        document.getElementById("platformWidthUnit").textContent =
          unitSystem === "imperial" ? "(ft)" : "(m)";
        document.getElementById("plankRatingUnit").textContent =
          unitSystem === "imperial" ? "(lb)" : "(kg)";
        document.getElementById("customDutyUnit").textContent =
          unitSystem === "imperial" ? "(lb/ft²)" : "(kN/m²)";
      }

      function getDutyLoad(unitSystem) {
        const duty = document.getElementById("dutyRating").value;
        const customVal = parseFloat(
          document.getElementById("customDuty").value
        );
        // Return in lb/ft² equivalent for internal calculations
        if (duty === "light") return 25;
        if (duty === "medium") return 50;
        if (duty === "heavy") return 75;
        if (duty === "custom") {
          if (unitSystem === "imperial") {
            return isNaN(customVal) ? 50 : customVal;
          } else {
            // convert kN/m² to lb/ft²
            const lbft2 = (isNaN(customVal) ? 2.4 : customVal) / 0.0478803;
            return lbft2;
          }
        }
        return 50;
      }

      function calculateScaffoldLoad() {
        const unitSystem = document.getElementById("unitSystem").value;

        const bayLength = parseFloat(
          document.getElementById("bayLength").value
        );
        const platformWidth = parseFloat(
          document.getElementById("platformWidth").value
        );
        const numPlanks = parseInt(
          document.getElementById("numPlanks").value,
          10
        );
        const plankRatingInput = parseFloat(
          document.getElementById("plankRating").value
        );
        const numLevels = parseInt(
          document.getElementById("numLevels").value,
          10
        );
        const safetyFactor = parseFloat(
          document.getElementById("safetyFactor").value
        );
        const liveLoadShare = parseFloat(
          document.getElementById("liveLoadShare").value
        );

        if (
          [
            bayLength,
            platformWidth,
            numPlanks,
            plankRatingInput,
            numLevels,
            safetyFactor,
            liveLoadShare,
          ].some((v) => isNaN(v) || v <= 0)
        ) {
          alert("Please enter positive values for all inputs.");
          return;
        }

        // Convert inputs to internal imperial units (ft, lb)
        const lengthFt =
          unitSystem === "imperial" ? bayLength : bayLength * 3.28084;
        const widthFt =
          unitSystem === "imperial" ? platformWidth : platformWidth * 3.28084;
        const plankRatingLb =
          unitSystem === "imperial"
            ? plankRatingInput
            : plankRatingInput * 2.20462;

        const areaFt2 = lengthFt * widthFt;

        const qDutyLbFt2 = getDutyLoad(unitSystem);
        const totalDesignPlatformLb = qDutyLbFt2 * areaFt2;

        const totalPlankCapacityLb = numPlanks * plankRatingLb;

        const governingPlatformLb = Math.min(
          totalDesignPlatformLb,
          totalPlankCapacityLb
        );

        const safePlatformLb = governingPlatformLb / safetyFactor;

        const safeBayLb = safePlatformLb * numLevels * (liveLoadShare / 100);

        // Update UI
        document.getElementById("resArea").textContent = formatValue(
          unitSystem === "imperial" ? areaFt2 : areaFt2 * 0.092903,
          unitSystem,
          "area"
        );
        document.getElementById("resDesignLoad").textContent = formatValue(
          qDutyLbFt2,
          unitSystem,
          "udl"
        );
        document.getElementById("resTotalDesign").textContent = formatValue(
          totalDesignPlatformLb,
          unitSystem,
          "force"
        );
        document.getElementById("resPlankCap").textContent = formatValue(
          totalPlankCapacityLb,
          unitSystem,
          "force"
        );
        document.getElementById("resGovPlatform").textContent = formatValue(
          governingPlatformLb,
          unitSystem,
          "force"
        );
        document.getElementById("resSafePlatform").textContent = formatValue(
          safePlatformLb,
          unitSystem,
          "force"
        );
        document.getElementById("resSafeBay").textContent = formatValue(
          safeBayLb,
          unitSystem,
          "force"
        );

        const noteEl = document.getElementById("resGoverningNote");
        if (
          governingPlatformLb === totalPlankCapacityLb &&
          totalPlankCapacityLb < totalDesignPlatformLb
        ) {
          noteEl.textContent =
            "Plank capacity governs. Consider stronger planks, shorter spans, or fewer loads.";
        } else if (
          governingPlatformLb === totalDesignPlatformLb &&
          totalDesignPlatformLb < totalPlankCapacityLb
        ) {
          noteEl.textContent =
            "Duty rating governs. Platform is limited by design load, not plank capacity.";
        } else {
          noteEl.textContent =
            "Plank capacity and duty rating are similar; use the lower value and verify with manufacturer data.";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateUnitLabels();

        document
          .getElementById("unitSystem")
          .addEventListener("change", function () {
            updateUnitLabels();
            // Recalculate to update displayed units
            calculateScaffoldLoad();
          });

        document
          .getElementById("dutyRating")
          .addEventListener("change", function () {
            const isCustom = this.value === "custom";
            document
              .getElementById("customDutyWrapper")
              .classList.toggle("hidden", !isCustom);
          });

        document
          .getElementById("calcButton")
          .addEventListener("click", calculateScaffoldLoad);
      });

