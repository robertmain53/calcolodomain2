    <script>
      // mobile menu toggle
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const isHidden = mobileMenu.classList.contains("hidden");
          mobileMenu.classList.toggle("hidden", !isHidden);
          mobileToggle.setAttribute("aria-expanded", String(isHidden));
        });
      }

      // tabs logic
      const tabs = document.getElementById("algebra-tabs");
      const panels = document.querySelectorAll(".algebra-panel");
      tabs.addEventListener("click", (e) => {
        const btn = e.target.closest("[data-tab]");
        if (!btn) return;
        const tab = btn.dataset.tab;
        // activate btn
        tabs
          .querySelectorAll(".tab-btn")
          .forEach((b) => b.classList.remove("active"));
        btn.classList.add("active");
        // show panel
        panels.forEach((p) => {
          p.id === tab
            ? p.classList.remove("hidden")
            : p.classList.add("hidden");
        });
      });

      // linear solver
      document.getElementById("lin-solve").addEventListener("click", () => {
        const a = parseFloat(document.getElementById("lin-a").value);
        const b = parseFloat(document.getElementById("lin-b").value);
        const c = parseFloat(document.getElementById("lin-c").value);
        const out = document.getElementById("lin-result");

        if (isNaN(a) || isNaN(b) || isNaN(c)) {
          out.textContent = "Please enter numeric values for a, b and c.";
          return;
        }
        if (a === 0) {
          if (b === c) {
            out.textContent =
              "Infinite solutions (0x + " + b + " = " + c + ").";
          } else {
            out.textContent = "No solution (a = 0 gives contradiction).";
          }
          return;
        }
        const x = (c - b) / a;
        out.textContent = "x = " + Number(x.toFixed(6));
      });

      // quadratic solver
      document.getElementById("quad-solve").addEventListener("click", () => {
        const a = parseFloat(document.getElementById("quad-a").value);
        const b = parseFloat(document.getElementById("quad-b").value);
        const c = parseFloat(document.getElementById("quad-c").value);
        const out = document.getElementById("quad-result");

        if (isNaN(a) || isNaN(b) || isNaN(c)) {
          out.textContent = "Please enter numeric values for a, b and c.";
          return;
        }
        if (a === 0) {
          out.textContent =
            "a must not be 0 for a quadratic. Try the linear solver above.";
          return;
        }

        const disc = b * b - 4 * a * c;
        if (disc > 0) {
          const sqrtD = Math.sqrt(disc);
          const x1 = (-b + sqrtD) / (2 * a);
          const x2 = (-b - sqrtD) / (2 * a);
          out.innerHTML =
            "Discriminant = " +
            Number(disc.toFixed(6)) +
            " &gt; 0 → two real solutions.<br>x₁ = " +
            Number(x1.toFixed(6)) +
            ", x₂ = " +
            Number(x2.toFixed(6));
        } else if (disc === 0) {
          const x = -b / (2 * a);
          out.innerHTML =
            "Discriminant = 0 → one real double root.<br>x = " +
            Number(x.toFixed(6));
        } else {
          const real = -b / (2 * a);
          const imag = Math.sqrt(-disc) / (2 * a);
          out.innerHTML =
            "Discriminant = " +
            Number(disc.toFixed(6)) +
            " &lt; 0 → complex solutions.<br>x₁ = " +
            Number(real.toFixed(6)) +
            " + " +
            Number(imag.toFixed(6)) +
            "i, x₂ = " +
            Number(real.toFixed(6)) +
            " - " +
            Number(imag.toFixed(6)) +
            "i";
        }
      });

      // slope & line
      document.getElementById("slope-calc").addEventListener("click", () => {
        const x1 = parseFloat(document.getElementById("x1").value);
        const y1 = parseFloat(document.getElementById("y1").value);
        const x2 = parseFloat(document.getElementById("x2").value);
        const y2 = parseFloat(document.getElementById("y2").value);
        const out = document.getElementById("slope-result");

        if ([x1, y1, x2, y2].some(isNaN)) {
          out.textContent = "Please enter numeric values for both points.";
          return;
        }
        const dx = x2 - x1;
        const dy = y2 - y1;
        if (dx === 0) {
          out.textContent =
            "Vertical line: slope undefined. Equation: x = " + x1;
          return;
        }
        const m = dy / dx;
        const b = y1 - m * x1;
        out.innerHTML =
          "Slope m = " +
          Number(m.toFixed(6)) +
          "<br>Line: y = " +
          Number(m.toFixed(6)) +
          "x + " +
          Number(b.toFixed(6));
      });

      // evaluate y = mx + b
      document.getElementById("eval-calc").addEventListener("click", () => {
        const m = parseFloat(document.getElementById("eval-m").value);
        const b = parseFloat(document.getElementById("eval-b").value);
        const x = parseFloat(document.getElementById("eval-x").value);
        const dec = parseInt(document.getElementById("eval-dec").value, 10);
        const out = document.getElementById("eval-result");

        if ([m, b, x].some(isNaN)) {
          out.textContent = "Please enter numeric values for m, b and x.";
          return;
        }
        const y = m * x + b;
        out.textContent = "At x = " + x + ", y = " + Number(y.toFixed(dec));
      });
    </script>

