      // Utility functions
      function degToRad(d) {
        return (d * Math.PI) / 180;
      }
      function radToDeg(r) {
        return (r * 180) / Math.PI;
      }
      function round(val, digits = 4) {
        if (!isFinite(val)) return "–";
        const factor = Math.pow(10, digits);
        return Math.round(val * factor) / factor;
      }

      function createInput(id, label, suffix) {
        return `
      <div>
        <label for="${id}" class="block text-sm font-medium text-gray-700 mb-1">${label}</label>
        <div class="flex">
          <input id="${id}" type="number" step="any" class="flex-1 border border-gray-300 rounded-l-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
          <span class="inline-flex items-center px-3 border border-l-0 border-gray-300 bg-gray-50 rounded-r-md text-sm text-gray-600">${suffix}</span>
        </div>
      </div>
    `;
      }

      const modeSelect = document.getElementById("mode-select");
      const inputSection = document.getElementById("input-section");
      const errorBox = document.getElementById("calc-error");
      const stepsBox = document.getElementById("steps-box");

      function renderInputs() {
        errorBox.textContent = "";
        stepsBox.textContent =
          "Select a mode, enter values, and click “Calculate” to see the derivation steps here.";
        const mode = modeSelect.value;
        let html = "";
        switch (mode) {
          case "side-height":
            html += createInput("in-side", "Side a", "length");
            html += createInput("in-height", "Height h", "length");
            break;
          case "side-angle":
            html += createInput("in-side", "Side a", "length");
            html += createInput("in-angle", "Angle α", "deg");
            break;
          case "diagonals":
            html += createInput("in-d1", "Diagonal d₁", "length");
            html += createInput("in-d2", "Diagonal d₂", "length");
            break;
          case "side-diagonal1":
            html += createInput("in-side", "Side a", "length");
            html += createInput("in-d1", "Diagonal d₁", "length");
            break;
          case "side-diagonal2":
            html += createInput("in-side", "Side a", "length");
            html += createInput("in-d2", "Diagonal d₂", "length");
            break;
          case "perimeter-area":
            html += createInput("in-perimeter", "Perimeter P", "length");
            html += createInput("in-area", "Area A", "length²");
            break;
        }
        inputSection.innerHTML = html;
      }

      modeSelect.addEventListener("change", renderInputs);
      renderInputs();

      function setResults(obj) {
        document.getElementById("res-side").textContent =
          obj.a != null ? obj.a : "–";
        document.getElementById("res-perimeter").textContent =
          obj.P != null ? obj.P : "–";
        document.getElementById("res-area").textContent =
          obj.A != null ? obj.A : "–";
        document.getElementById("res-height").textContent =
          obj.h != null ? obj.h : "–";
        document.getElementById("res-d1").textContent =
          obj.d1 != null ? obj.d1 : "–";
        document.getElementById("res-d2").textContent =
          obj.d2 != null ? obj.d2 : "–";
        document.getElementById("res-angleA").textContent =
          obj.alpha != null ? obj.alpha : "–";
        document.getElementById("res-angleB").textContent =
          obj.beta != null ? obj.beta : "–";
      }

      function calculate() {
        errorBox.textContent = "";
        const mode = modeSelect.value;
        let a, h, alphaDeg, alphaRad, d1, d2, P, A;
        let steps = [];

        try {
          if (mode === "side-height") {
            a = parseFloat(document.getElementById("in-side").value);
            h = parseFloat(document.getElementById("in-height").value);
            if (!(a > 0 && h > 0))
              throw new Error(
                "Please enter positive values for side and height."
              );
            if (h > a)
              throw new Error(
                "Height cannot be greater than the side length in a rhombus."
              );

            steps.push(`Given side a = ${a} and height h = ${h}.`);
            A = a * h;
            steps.push(`Area A = a · h = ${a} · ${h} = ${A}.`);
            P = 4 * a;
            steps.push(`Perimeter P = 4a = 4 · ${a} = ${P}.`);
            const sinAlpha = h / a;
            if (sinAlpha <= 0 || sinAlpha > 1)
              throw new Error("The ratio h/a must be between 0 and 1.");
            alphaRad = Math.asin(sinAlpha);
            alphaDeg = radToDeg(alphaRad);
            steps.push(
              `sin(α) = h/a = ${h}/${a} = ${round(
                sinAlpha,
                4
              )} ⇒ α = arcsin(${round(sinAlpha, 4)}) ≈ ${round(alphaDeg, 4)}°.`
            );
            const cosAlpha = Math.cos(alphaRad);
            d1 = a * Math.sqrt(2 + 2 * cosAlpha);
            d2 = a * Math.sqrt(2 - 2 * cosAlpha);
            steps.push(`Using diagonals formulas:
d₁ = a√(2 + 2cosα) ≈ ${round(d1, 4)},
d₂ = a√(2 − 2cosα) ≈ ${round(d2, 4)}.`);
          } else if (mode === "side-angle") {
            a = parseFloat(document.getElementById("in-side").value);
            alphaDeg = parseFloat(document.getElementById("in-angle").value);
            if (!(a > 0 && alphaDeg > 0 && alphaDeg < 180))
              throw new Error(
                "Enter a positive side and an angle between 0° and 180°."
              );
            alphaRad = degToRad(alphaDeg);
            steps.push(`Given side a = ${a} and angle α = ${alphaDeg}°.`);
            h = a * Math.sin(alphaRad);
            steps.push(
              `Height h = a·sinα = ${a}·sin(${alphaDeg}°) ≈ ${round(h, 4)}.`
            );
            A = a * h;
            steps.push(`Area A = a·h ≈ ${round(A, 4)}.`);
            P = 4 * a;
            steps.push(`Perimeter P = 4a = ${P}.`);
            const cosAlpha = Math.cos(alphaRad);
            d1 = a * Math.sqrt(2 + 2 * cosAlpha);
            d2 = a * Math.sqrt(2 - 2 * cosAlpha);
            steps.push(`Diagonals:
d₁ = a√(2 + 2cosα) ≈ ${round(d1, 4)},
d₂ = a√(2 − 2cosα) ≈ ${round(d2, 4)}.`);
          } else if (mode === "diagonals") {
            d1 = parseFloat(document.getElementById("in-d1").value);
            d2 = parseFloat(document.getElementById("in-d2").value);
            if (!(d1 > 0 && d2 > 0))
              throw new Error(
                "Please enter positive values for both diagonals."
              );
            steps.push(`Given diagonals d₁ = ${d1} and d₂ = ${d2}.`);
            A = 0.5 * d1 * d2;
            steps.push(`Area A = (d₁·d₂)/2 = (${d1}·${d2})/2 = ${A}.`);
            a = Math.sqrt(Math.pow(d1 / 2, 2) + Math.pow(d2 / 2, 2));
            steps.push(`Side a = √[(d₁/2)² + (d₂/2)²] ≈ ${round(a, 4)}.`);
            P = 4 * a;
            steps.push(`Perimeter P = 4a ≈ ${round(P, 4)}.`);
            h = A / a;
            steps.push(`Height h = A/a ≈ ${round(h, 4)}.`);
            alphaRad = 2 * Math.atan(d2 / d1);
            alphaDeg = radToDeg(alphaRad);
            steps.push(`Using tan(α/2) = d₂/d₁ ⇒ α ≈ ${round(alphaDeg, 4)}°.`);
          } else if (mode === "side-diagonal1") {
            a = parseFloat(document.getElementById("in-side").value);
            d1 = parseFloat(document.getElementById("in-d1").value);
            if (!(a > 0 && d1 > 0))
              throw new Error(
                "Please enter positive values for side and diagonal."
              );
            if (d1 >= 2 * a)
              throw new Error(
                "Diagonal d₁ must be less than 2a for a valid rhombus."
              );
            steps.push(`Given side a = ${a} and diagonal d₁ = ${d1}.`);
            const halfD1 = d1 / 2;
            const halfD2 = Math.sqrt(a * a - halfD1 * halfD1);
            d2 = 2 * halfD2;
            steps.push(
              `From right triangle: (d₂/2)² = a² − (d₁/2)² ⇒ d₂ ≈ ${round(
                d2,
                4
              )}.`
            );
            A = 0.5 * d1 * d2;
            steps.push(`Area A = (d₁·d₂)/2 ≈ ${round(A, 4)}.`);
            P = 4 * a;
            steps.push(`Perimeter P = 4a = ${P}.`);
            h = A / a;
            steps.push(`Height h = A/a ≈ ${round(h, 4)}.`);
            alphaRad = 2 * Math.atan(d2 / d1);
            alphaDeg = radToDeg(alphaRad);
            steps.push(
              `Angle α from tan(α/2) = d₂/d₁ ⇒ α ≈ ${round(alphaDeg, 4)}°.`
            );
          } else if (mode === "side-diagonal2") {
            a = parseFloat(document.getElementById("in-side").value);
            d2 = parseFloat(document.getElementById("in-d2").value);
            if (!(a > 0 && d2 > 0))
              throw new Error(
                "Please enter positive values for side and diagonal."
              );
            if (d2 >= 2 * a)
              throw new Error(
                "Diagonal d₂ must be less than 2a for a valid rhombus."
              );
            steps.push(`Given side a = ${a} and diagonal d₂ = ${d2}.`);
            const halfD2 = d2 / 2;
            const halfD1 = Math.sqrt(a * a - halfD2 * halfD2);
            d1 = 2 * halfD1;
            steps.push(
              `From right triangle: (d₁/2)² = a² − (d₂/2)² ⇒ d₁ ≈ ${round(
                d1,
                4
              )}.`
            );
            A = 0.5 * d1 * d2;
            steps.push(`Area A = (d₁·d₂)/2 ≈ ${round(A, 4)}.`);
            P = 4 * a;
            steps.push(`Perimeter P = 4a = ${P}.`);
            h = A / a;
            steps.push(`Height h = A/a ≈ ${round(h, 4)}.`);
            alphaRad = 2 * Math.atan(d2 / d1);
            alphaDeg = radToDeg(alphaRad);
            steps.push(
              `Angle α from tan(α/2) = d₂/d₁ ⇒ α ≈ ${round(alphaDeg, 4)}°.`
            );
          } else if (mode === "perimeter-area") {
            P = parseFloat(document.getElementById("in-perimeter").value);
            A = parseFloat(document.getElementById("in-area").value);
            if (!(P > 0 && A > 0))
              throw new Error(
                "Please enter positive values for perimeter and area."
              );
            a = P / 4;
            steps.push(`Side a = P/4 = ${P}/4 = ${a}.`);
            h = A / a;
            steps.push(`Height h = A/a = ${A}/${a} ≈ ${round(h, 4)}.`);
            const sinAlpha = h / a;
            if (sinAlpha <= 0 || sinAlpha > 1)
              throw new Error(
                "The given perimeter and area are inconsistent for a rhombus."
              );
            alphaRad = Math.asin(sinAlpha);
            alphaDeg = radToDeg(alphaRad);
            steps.push(
              `sin(α) = h/a ≈ ${round(sinAlpha, 4)} ⇒ α ≈ ${round(
                alphaDeg,
                4
              )}°.`
            );
            const cosAlpha = Math.cos(alphaRad);
            d1 = a * Math.sqrt(2 + 2 * cosAlpha);
            d2 = a * Math.sqrt(2 - 2 * cosAlpha);
            steps.push(`Diagonals from a and α:
d₁ ≈ ${round(d1, 4)}, d₂ ≈ ${round(d2, 4)}.`);
          }

          const betaDeg = 180 - alphaDeg;
          setResults({
            a: a != null ? round(a, 4) : null,
            P: P != null ? round(P, 4) : null,
            A: A != null ? round(A, 4) : null,
            h: h != null ? round(h, 4) : null,
            d1: d1 != null ? round(d1, 4) : null,
            d2: d2 != null ? round(d2, 4) : null,
            alpha: alphaDeg != null ? round(alphaDeg, 4) + "°" : null,
            beta:
              betaDeg != null && isFinite(betaDeg)
                ? round(betaDeg, 4) + "°"
                : null,
          });

          stepsBox.textContent = steps.join("\n");
        } catch (e) {
          errorBox.textContent = e.message;
          stepsBox.textContent = "Error: " + e.message;
        }
      }

      document.getElementById("calc-btn").addEventListener("click", calculate);

      document.getElementById("reset-btn").addEventListener("click", () => {
        renderInputs();
        setResults({
          a: null,
          P: null,
          A: null,
          h: null,
          d1: null,
          d2: null,
          alpha: null,
          beta: null,
        });
        errorBox.textContent = "";
        stepsBox.textContent =
          "Select a mode, enter values, and click “Calculate” to see the derivation steps here.";
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
