    <script>
      // Utility: format currency
      function fmtCurrency(value) {
        if (!isFinite(value)) return "–";
        return (
          "$" +
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }

      // Utility: format percentage
      function fmtPercent(value) {
        if (!isFinite(value)) return "–";
        return (
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          }) + "%"
        );
      }

      function syncTermInputs(prefix) {
        const yearsEl = document.getElementById("termYears" + prefix);
        const monthsEl = document.getElementById("termMonths" + prefix);
        const sliderEl = document.getElementById("term" + prefix + "Slider");

        // When months change, update years and slider
        monthsEl.addEventListener("input", () => {
          let m = parseInt(monthsEl.value, 10) || 0;
          if (m < 1) m = 1;
          if (m > 120) m = 120;
          monthsEl.value = m;
          yearsEl.value = (m / 12).toFixed(2).replace(/\.00$/, "");
          sliderEl.value = m;
          calculateAll();
        });

        // When years change, update months and slider
        yearsEl.addEventListener("input", () => {
          let y = parseFloat(yearsEl.value) || 0;
          if (y < 0.1) y = 0.1;
          if (y > 10) y = 10;
          yearsEl.value = y;
          const m = Math.round(y * 12);
          monthsEl.value = m;
          sliderEl.value = m;
          calculateAll();
        });

        // When slider changes, update months and years
        sliderEl.addEventListener("input", () => {
          const m = parseInt(sliderEl.value, 10) || 0;
          monthsEl.value = m;
          yearsEl.value = (m / 12).toFixed(2).replace(/\.00$/, "");
          calculateAll();
        });
      }

      function syncAmount(prefix) {
        const input = document.getElementById("amount" + prefix);
        const slider = document.getElementById("amount" + prefix + "Slider");
        const out = document.getElementById("amount" + prefix + "Out");

        function updateFromInput() {
          let v = parseFloat(input.value) || 0;
          if (v < 0) v = 0;
          if (v > 1000000) v = 1000000;
          input.value = v;
          const s = Math.min(
            Math.max(v, parseFloat(slider.min)),
            parseFloat(slider.max)
          );
          slider.value = s;
          out.textContent = fmtCurrency(s).replace(".00", "");
          calculateAll();
        }

        function updateFromSlider() {
          const v = parseFloat(slider.value) || 0;
          input.value = v;
          out.textContent = fmtCurrency(v).replace(".00", "");
          calculateAll();
        }

        input.addEventListener("input", updateFromInput);
        slider.addEventListener("input", updateFromSlider);
        updateFromSlider();
      }

      function syncRate(prefix) {
        const input = document.getElementById("rate" + prefix);
        const slider = document.getElementById("rate" + prefix + "Slider");

        function updateFromInput() {
          let v = parseFloat(input.value) || 0;
          if (v < 0) v = 0;
          if (v > 99) v = 99;
          input.value = v;
          const s = Math.min(
            Math.max(v, parseFloat(slider.min)),
            parseFloat(slider.max)
          );
          slider.value = s;
          calculateAll();
        }

        function updateFromSlider() {
          const v = parseFloat(slider.value) || 0;
          input.value = v.toFixed(1);
          calculateAll();
        }

        input.addEventListener("input", updateFromInput);
        slider.addEventListener("input", updateFromSlider);
        updateFromSlider();
      }

      function computeLoanScenario(prefix) {
        const P =
          parseFloat(document.getElementById("amount" + prefix).value) || 0;
        const annualRate =
          parseFloat(document.getElementById("rate" + prefix).value) || 0;
        const n =
          parseInt(document.getElementById("termMonths" + prefix).value, 10) ||
          0;
        const fee =
          parseFloat(document.getElementById("fee" + prefix).value) || 0;
        const extra =
          parseFloat(document.getElementById("extra" + prefix).value) || 0;

        const paymentEl = document.getElementById("payment" + prefix);
        const interestEl = document.getElementById("interest" + prefix);
        const totalEl = document.getElementById("total" + prefix);
        const durationEl = document.getElementById("duration" + prefix);
        const aprEl = document.getElementById("apr" + prefix);

        if (P <= 0 || n <= 0) {
          paymentEl.textContent = "$0.00";
          interestEl.textContent = "$0.00";
          totalEl.textContent = "$0.00";
          durationEl.textContent = "–";
          aprEl.textContent = "–";
          return { totalInterest: 0, totalCost: 0, payment: 0 };
        }

        const r = annualRate / 100 / 12;
        let basePayment;

        if (r === 0) {
          basePayment = P / n;
        } else {
          basePayment = (P * r) / (1 - Math.pow(1 + r, -n));
        }

        const scheduledPayment = basePayment;
        const actualPayment = basePayment + (extra > 0 ? extra : 0);

        // Amortization with extra payment
        let balance = P;
        let totalInterest = 0;
        let months = 0;

        while (balance > 0 && months < 1000 * 12) {
          const interest = balance * r;
          let principal = actualPayment - interest;
          if (principal <= 0) {
            // Extra payment too small to cover interest: break to avoid infinite loop
            principal = 0;
            break;
          }
          if (principal > balance) {
            principal = balance;
          }
          balance -= principal;
          totalInterest += interest;
          months++;
          if (balance <= 0.01) break;
        }

        const totalCost = P + totalInterest;
        paymentEl.textContent = fmtCurrency(actualPayment);
        interestEl.textContent = fmtCurrency(totalInterest);
        totalEl.textContent = fmtCurrency(totalCost);
        durationEl.textContent = months
          ? months +
            " months (" +
            (months / 12).toFixed(1).replace(/\.0$/, "") +
            " years)"
          : "–";

        // Approximate effective APR including fee using simple approximation:
        // effective principal received = P - fee; cost = totalInterest + fee
        if (fee > 0 && months > 0) {
          const netPrincipal = P - fee;
          if (netPrincipal > 0) {
            const avgBalance = (P + 0) / 2;
            const years = months / 12;
            const approxApr =
              ((totalInterest + fee) / avgBalance / years) * 100;
            aprEl.textContent = fmtPercent(approxApr);
          } else {
            aprEl.textContent = "–";
          }
        } else {
          aprEl.textContent = annualRate ? fmtPercent(annualRate) : "–";
        }

        return { totalInterest, totalCost, payment: actualPayment };
      }

      function calculateAll() {
        const resA = computeLoanScenario("A");
        const resB = computeLoanScenario("B");

        const summaryEl = document.getElementById("comparisonSummary");
        if (!resA.totalCost && !resB.totalCost) {
          summaryEl.textContent =
            "Adjust the inputs above to compare two personal loan offers.";
          return;
        }

        if (resA.totalCost && resB.totalCost) {
          if (Math.abs(resA.totalCost - resB.totalCost) < 1) {
            summaryEl.textContent =
              "Both scenarios have nearly the same total cost. Focus on which monthly payment better fits your budget.";
          } else if (resA.totalCost < resB.totalCost) {
            const diff = resB.totalCost - resA.totalCost;
            summaryEl.textContent =
              "Scenario A is cheaper overall by about " +
              fmtCurrency(diff) +
              " in total cost compared with Scenario B.";
          } else {
            const diff = resA.totalCost - resB.totalCost;
            summaryEl.textContent =
              "Scenario B is cheaper overall by about " +
              fmtCurrency(diff) +
              " in total cost compared with Scenario A.";
          }
        } else if (resA.totalCost) {
          summaryEl.textContent =
            "Scenario A is fully defined. Add details for Scenario B to compare another offer side‑by‑side.";
        } else if (resB.totalCost) {
          summaryEl.textContent =
            "Scenario B is fully defined. Add details for Scenario A to compare another offer side‑by‑side.";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        syncAmount("A");
        syncAmount("B");
        syncRate("A");
        syncRate("B");
        syncTermInputs("A");
        syncTermInputs("B");

        ["feeA", "extraA", "feeB", "extraB"].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("input", calculateAll);
        });

        calculateAll();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
