          category: "long",
        },
        {
          id: "lorazepam",
          name: "Lorazepam",
          brand: "Ativan / Tavor",
          doseFor10: 1,
          factor: 10,
          halfLife: "10–20 h (intermediate)",
          category: "intermediate",
        },
        {
