          halfLife: "4–15 h (short–intermediate)",
          category: "short",
        },
        {
          id: "temazepam",
          name: "Temazepam",
          brand: "Restoril",
          doseFor10: 20,
          factor: 0.5,
          halfLife: "8–20 h (intermediate)",
          category: "intermediate",
        },
        {
          id: "chlordiazepoxide",
          name: "Chlordiazepoxide",
          brand: "Librium",
          doseFor10: 25,
          factor: 0.4,
          halfLife: "5–30 h (+ active metabolites)",
          category: "long",
        },
        {
          id: "nitrazepam",
          name: "Nitrazepam",
          brand: "Mogadon",
          doseFor10: 10,
          factor: 1,
          halfLife: "15–38 h (long)",
          category: "long",
        },
        {
          id: "flurazepam",
          name: "Flurazepam",
          brand: "Dalmane",
          doseFor10: 15,
          factor: 0.67,
          halfLife: "40–250 h (very long, metabolites)",
          category: "long",
        },
        {
          id: "triazolam",
          name: "Triazolam",
          brand: "Halcion",
          doseFor10: 0.25,
          factor: 40,
          halfLife: "2–5 h (very short)",
          category: "short",
        },
        {
          id: "bromazepam",
          name: "Bromazepam",
          brand: "Lexotan",
          doseFor10: 6,
          factor: 1.67,
          halfLife: "10–20 h (intermediate)",
          category: "intermediate",
        },
        {
          id: "lormetazepam",
          name: "Lormetazepam",
          brand: "Noctamid",
          doseFor10: 1,
          factor: 10,
          halfLife: "10–12 h (intermediate)",
          category: "intermediate",
        },
        {
          id: "midazolam",
          name: "Midazolam",
          brand: "Dormicum (oral)",
          doseFor10: 7.5,
          factor: 1.33,
          halfLife: "1.5–3 h (short)",
          category: "short",
        },
      ];

      function populateSelects() {
        const currentSelect = document.getElementById("current-drug");
        const targetSelect = document.getElementById("target-drug");
        BENZO_DATA.forEach((drug) => {
          const opt1 = document.createElement("option");
          opt1.value = drug.id;
          opt1.textContent = `${drug.name} (${drug.brand})`;
          currentSelect.appendChild(opt1);

          const opt2 = document.createElement("option");
          opt2.value = drug.id;
          opt2.textContent = `${drug.name} (${drug.brand})`;
          targetSelect.appendChild(opt2);
        });
        // sensible defaults
        currentSelect.value = "alprazolam";
        targetSelect.value = "diazepam";
      }

      function populateEquivTable() {
        const tbody = document.getElementById("equiv-table-body");
        BENZO_DATA.forEach((drug) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 text-gray-800">${drug.name}</td>
        <td class="px-3 py-2 text-gray-600">${drug.brand}</td>
        <td class="px-3 py-2 text-gray-800">${drug.doseFor10
          .toFixed(2)
          .replace(/\.00$/, "")} mg ≈ 10 mg diazepam</td>
        <td class="px-3 py-2 text-gray-800">${drug.factor
          .toFixed(2)
          .replace(/\.00$/, "")}</td>
        <td class="px-3 py-2 text-gray-600">${drug.halfLife}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function getDrugById(id) {
        return BENZO_DATA.find((d) => d.id === id);
      }

      function roundToStep(value, step) {
        if (!step || step <= 0) return value;
        return Math.round(value / step) * step;
      }

      function formatMg(value) {
        if (value >= 1) return value.toFixed(1).replace(/\.0$/, "");
        return value.toFixed(2).replace(/0+$/, "").replace(/\.$/, "");
      }

      function calculateConversion() {
        const currentId = document.getElementById("current-drug").value;
        const targetId = document.getElementById("target-drug").value;
        const dose = parseFloat(document.getElementById("current-dose").value);
        const freq =
          parseInt(document.getElementById("current-frequency").value, 10) || 1;
        const roundingStep = parseFloat(
          document.getElementById("rounding-step").value
        );

        const resultsPanel = document.getElementById("results-panel");
        const diazepamLine = document.getElementById(
          "diazepam-equivalent-line"
        );
        const targetLine = document.getElementById("target-equivalent-line");
        const halfLifeNote = document.getElementById("half-life-note");

        if (!currentId || isNaN(dose) || dose <= 0) {
          resultsPanel.classList.add("hidden");
          return;
        }

        const currentDrug = getDrugById(currentId);
        const targetDrug = getDrugById(targetId);

        const diazepamEquiv = dose * currentDrug.factor;
        diazepamLine.textContent = `${formatMg(dose)} mg/day of ${
          currentDrug.name
        } ≈ ${formatMg(diazepamEquiv)} mg/day diazepam (approximate).`;

        if (targetDrug && targetId !== currentId) {
          const targetDoseRaw = diazepamEquiv / targetDrug.factor;
          const targetDoseRounded = roundToStep(targetDoseRaw, roundingStep);
          targetLine.textContent = `Equipotent target dose: about ${formatMg(
            targetDoseRounded
          )} mg/day of ${
            targetDrug.name
          } (rounded to nearest ${roundingStep} mg).`;
        } else {
          targetLine.textContent = "";
        }

        halfLifeNote.textContent =
          `Half‑life (approx.): ${currentDrug.name} ${currentDrug.halfLife}; ` +
          (targetDrug ? `${targetDrug.name} ${targetDrug.halfLife}.` : "");

        resultsPanel.classList.remove("hidden");

        // store for taper generator
        window._benzoState = {
          currentDrug,
          targetDrug,
          dose,
          diazepamEquiv,
          freq,
        };
      }

      function generateTaper() {
        const state = window._benzoState;
        if (
          !state ||
          !state.currentDrug ||
          !state.targetDrug ||
          state.currentDrug.id === state.targetDrug.id
        ) {
          alert(
            "First calculate a conversion between two different benzodiazepines."
          );
          return;
        }
        const weeks = parseInt(
          document.getElementById("taper-weeks").value,
          10
        );
        const steps = parseInt(
          document.getElementById("taper-steps").value,
          10
        );
        if (!weeks || weeks <= 0 || !steps || steps < 2) {
          alert("Please enter a taper duration and at least 2 steps.");
          return;
        }

        const { currentDrug, targetDrug, dose, diazepamEquiv } = state;
        const currentDiazPerMg = currentDrug.factor;
        const targetDiazPerMg = targetDrug.factor;

        const taperWrapper = document.getElementById("taper-table-wrapper");
        const tbody = document.getElementById("taper-table-body");
        const currentHeader = document.getElementById("taper-current-header");
        const targetHeader = document.getElementById("taper-target-header");

        currentHeader.textContent = `${currentDrug.name} (mg/day)`;
        targetHeader.textContent = `${targetDrug.name} (mg/day)`;

        tbody.innerHTML = "";

        const stepDiazepamChange = diazepamEquiv / (steps - 1);
        const weeksPerStep = weeks / steps;

        for (let i = 0; i < steps; i++) {
          const remainingDiazepamEquiv = diazepamEquiv - stepDiazepamChange * i;
          const currentDoseStep = Math.max(
            0,
            remainingDiazepamEquiv / currentDiazPerMg
          );
          const targetDoseStep =
            Math.max(0, diazepamEquiv - remainingDiazepamEquiv) /
            targetDiazPerMg;

          const startWeek = Math.round(i * weeksPerStep + 1);
          const endWeek = Math.round((i + 1) * weeksPerStep);

          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 text-gray-800">${i + 1}</td>
        <td class="px-3 py-2 text-gray-600">Week ${startWeek}–${endWeek}</td>
        <td class="px-3 py-2 text-gray-800">${formatMg(currentDoseStep)}</td>
        <td class="px-3 py-2 text-gray-800">${formatMg(targetDoseStep)}</td>
        <td class="px-3 py-2 text-gray-600">${formatMg(diazepamEquiv)}</td>
      `;
          tbody.appendChild(tr);
        }

        taperWrapper.classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateSelects();
        populateEquivTable();
        document
          .getElementById("convert-btn")
          .addEventListener("click", calculateConversion);
        document
          .getElementById("taper-btn")
          .addEventListener("click", generateTaper);
      });

      // MathJax config (kept from template)
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
