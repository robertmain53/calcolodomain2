    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = {
        single: document.getElementById("tab-single"),
        multi: document.getElementById("tab-multi"),
        belt: document.getElementById("tab-belt"),
      };

      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          Object.keys(tabPanels).forEach((key) => {
            tabPanels[key].classList.toggle("hidden", key !== target);
          });
        });
      });

      // Utility functions
      function parsePositive(value) {
        const v = parseFloat(value);
        return isFinite(v) && v > 0 ? v : null;
      }

      function round(value, decimals = 3) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      // Single-stage calculator
      (function () {
        const unitSelect = document.getElementById("single-unit");
        const solveForSelect = document.getElementById("single-solve-for");
        const N1Input = document.getElementById("single-N1");
        const D1Input = document.getElementById("single-D1");
        const N2Input = document.getElementById("single-N2");
        const D2Input = document.getElementById("single-D2");
        const calcBtn = document.getElementById("single-calc");
        const resetBtn = document.getElementById("single-reset");
        const errorEl = document.getElementById("single-error");
        const resultsBox = document.getElementById("single-results");
        const resN2 = document.getElementById("single-res-N2");
        const resRatio = document.getElementById("single-res-ratio");
        const resDiamRatio = document.getElementById("single-res-diam-ratio");
        const resBeltSpeed = document.getElementById("single-res-belt-speed");
        const resBeltUnit = document.getElementById("single-res-belt-unit");

        function updateSolveState() {
          const solveFor = solveForSelect.value;
          N2Input.disabled = solveFor === "N2";
          D2Input.disabled = solveFor === "D2";
          if (solveFor === "ratio") {
            N2Input.disabled = true;
            D2Input.disabled = true;
          }
        }

        solveForSelect.addEventListener("change", updateSolveState);
        updateSolveState();

        calcBtn.addEventListener("click", () => {
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");

          const N1 = parsePositive(N1Input.value);
          const D1 = parsePositive(D1Input.value);
          let N2 = parsePositive(N2Input.value);
          let D2 = parsePositive(D2Input.value);
          const solveFor = solveForSelect.value;

          if (!N1 || !D1) {
            errorEl.textContent = "Enter valid driver RPM and driver diameter.";
            return;
          }

          if (solveFor === "N2") {
            if (!D2) {
              errorEl.textContent =
                "Enter driven pulley diameter to solve for RPM.";
              return;
            }
            N2 = N1 * (D1 / D2);
          } else if (solveFor === "D2") {
            if (!N2) {
              errorEl.textContent = "Enter driven RPM to solve for diameter.";
              return;
            }
            D2 = D1 * (N1 / N2);
          } else if (solveFor === "ratio") {
            if (!D2 && !N2) {
              errorEl.textContent =
                "Enter either driven RPM or driven diameter to compute ratio.";
              return;
            }
            if (!D2 && N2) {
              D2 = D1 * (N1 / N2);
            }
            if (!N2 && D2) {
              N2 = N1 * (D1 / D2);
            }
          }

          if (!N2 || !D2) {
            errorEl.textContent = "Unable to compute. Check your inputs.";
            return;
          }

          const ratio = N1 / N2;
          const diamRatio = D2 / D1;

          // Belt speed: v = π * D1 * N1 (convert diameter to meters or feet)
          const unit = unitSelect.value;
          let v, vUnit;
          if (unit === "mm") {
            const D1_m = D1 / 1000;
            v = (Math.PI * D1_m * N1) / 60; // m/s
            vUnit = "m/s";
          } else {
            const D1_ft = D1 / 12;
            v = (Math.PI * D1_ft * N1) / 60; // ft/s
            vUnit = "ft/s";
          }

          resN2.textContent = round(N2, 2);
          resRatio.textContent = round(ratio, 3);
          resDiamRatio.textContent = round(diamRatio, 3);
          resBeltSpeed.textContent = round(v, 3);
          resBeltUnit.textContent = vUnit;
          resultsBox.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          N1Input.value = "";
          D1Input.value = "";
          N2Input.value = "";
          D2Input.value = "";
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");
        });
      })();

      // Multi-stage calculator
      (function () {
        const unitSelect = document.getElementById("multi-unit");
        const stagesSelect = document.getElementById("multi-stages");
        const N1Input = document.getElementById("multi-N1");
        const container = document.getElementById("multi-stages-container");
        const calcBtn = document.getElementById("multi-calc");
        const resetBtn = document.getElementById("multi-reset");
        const errorEl = document.getElementById("multi-error");
        const resultsBox = document.getElementById("multi-results");
        const resRatio = document.getElementById("multi-res-ratio");
        const resNout = document.getElementById("multi-res-Nout");

        function createStageRow(index) {
          const div = document.createElement("div");
          div.className = "border rounded-md p-3 bg-gray-50";
          div.dataset.stage = index;
          div.innerHTML = `
        <h3 class="font-semibold mb-2 text-sm">Stage ${index}</h3>
        <div class="input-grid">
          <div>
            <label class="block text-xs font-medium text-gray-700">Driver diameter D₁${index}</label>
            <input type="number" inputmode="decimal" class="mt-1 w-full border rounded-md px-3 py-2 stage-D1">
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-700">Driven diameter D₂${index}</label>
            <input type="number" inputmode="decimal" class="mt-1 w-full border rounded-md px-3 py-2 stage-D2">
          </div>
        </div>
      `;
          return div;
        }

        function renderStages() {
          container.innerHTML = "";
          const n = parseInt(stagesSelect.value, 10);
          for (let i = 1; i <= n; i++) {
            container.appendChild(createStageRow(i));
          }
        }

        stagesSelect.addEventListener("change", renderStages);
        renderStages();

        calcBtn.addEventListener("click", () => {
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");

          const N1 = parsePositive(N1Input.value);
          if (!N1) {
            errorEl.textContent = "Enter a valid input speed.";
            return;
          }

          const stageDivs = container.querySelectorAll("[data-stage]");
          let Rtotal = 1;
          for (const div of stageDivs) {
            const D1 = parsePositive(div.querySelector(".stage-D1").value);
            const D2 = parsePositive(div.querySelector(".stage-D2").value);
            if (!D1 || !D2) {
              errorEl.textContent = "Enter valid diameters for all stages.";
              return;
            }
            const R = D2 / D1; // speed ratio for this stage
            Rtotal *= R;
          }

          const Nout = N1 / Rtotal;
          resRatio.textContent = round(Rtotal, 4);
          resNout.textContent = round(Nout, 2);
          resultsBox.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          N1Input.value = "";
          renderStages();
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");
        });
      })();

      // Belt length / center distance calculator
      (function () {
        const unitSelect = document.getElementById("belt-unit");
        const solveForSelect = document.getElementById("belt-solve-for");
        const D1Input = document.getElementById("belt-D1");
        const D2Input = document.getElementById("belt-D2");
        const CInput = document.getElementById("belt-C");
        const LInput = document.getElementById("belt-L");
        const calcBtn = document.getElementById("belt-calc");
        const resetBtn = document.getElementById("belt-reset");
        const errorEl = document.getElementById("belt-error");
        const resultsBox = document.getElementById("belt-results");
        const resL = document.getElementById("belt-res-L");
        const resC = document.getElementById("belt-res-C");
        const resLUnit = document.getElementById("belt-res-L-unit");
        const resCUnit = document.getElementById("belt-res-C-unit");

        function updateSolveState() {
          const solveFor = solveForSelect.value;
          if (solveFor === "L") {
            LInput.disabled = true;
            CInput.disabled = false;
          } else {
            LInput.disabled = false;
            CInput.disabled = true;
          }
        }

        solveForSelect.addEventListener("change", updateSolveState);
        updateSolveState();

        function beltLength(D1, D2, C) {
          // L ≈ 2C + (π/2)(D1 + D2) + (D2 − D1)^2 / (4C)
          return (
            2 * C + (Math.PI / 2) * (D1 + D2) + Math.pow(D2 - D1, 2) / (4 * C)
          );
        }

        calcBtn.addEventListener("click", () => {
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");

          const D1 = parsePositive(D1Input.value);
          const D2 = parsePositive(D2Input.value);
          if (!D1 || !D2) {
            errorEl.textContent = "Enter valid pulley diameters.";
            return;
          }

          const solveFor = solveForSelect.value;
          let C = parsePositive(CInput.value);
          let L = parsePositive(LInput.value);

          if (solveFor === "L") {
            if (!C) {
              errorEl.textContent =
                "Enter center distance to compute belt length.";
              return;
            }
            L = beltLength(D1, D2, C);
          } else {
            if (!L) {
              errorEl.textContent =
                "Enter belt length to compute center distance.";
              return;
            }
            // Simple numeric solve for C using Newton-Raphson
            C = L / 2; // initial guess
            for (let i = 0; i < 30; i++) {
              const f = beltLength(D1, D2, C) - L;
              const df = 2 - Math.pow(D2 - D1, 2) / (4 * C * C); // derivative dL/dC
              const step = f / df;
              C -= step;
              if (Math.abs(step) < 1e-6) break;
            }
            if (!isFinite(C) || C <= 0) {
              errorEl.textContent =
                "Unable to solve for center distance. Check your inputs.";
              return;
            }
          }

          const unitLabel = unitSelect.value === "mm" ? "mm" : "in";
          resL.textContent = round(L, 2);
          resC.textContent = round(C, 2);
          resLUnit.textContent = unitLabel;
          resCUnit.textContent = unitLabel;
          resultsBox.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          D1Input.value = "";
          D2Input.value = "";
          CInput.value = "";
          LInput.value = "";
          errorEl.textContent = "";
          resultsBox.classList.add("hidden");
        });
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
