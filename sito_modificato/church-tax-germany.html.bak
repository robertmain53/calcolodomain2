    <script>
      // Simple Kirchensteuer calculator logic
      function getRateForState(code) {
        // 8% in BW and BY, 9% elsewhere
        if (code === "BW" || code === "BY") return 0.08;
        return 0.09;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const incomeTaxInput = document.getElementById("incomeTax");
        const stateSelect = document.getElementById("state");
        const denomSelect = document.getElementById("denomination");
        const maritalSelect = document.getElementById("maritalStatus");
        const applyCapCheckbox = document.getElementById("applyCap");
        const calcBtn = document.getElementById("calculateBtn");

        const statusMessage = document.getElementById("statusMessage");
        const resultsContent = document.getElementById("resultsContent");
        const rateDisplay = document.getElementById("rateDisplay");
        const basisTaxDisplay = document.getElementById("basisTaxDisplay");
        const annualTaxDisplay = document.getElementById("annualTaxDisplay");
        const monthlyTaxDisplay = document.getElementById("monthlyTaxDisplay");
        const effectiveShareDisplay = document.getElementById(
          "effectiveShareDisplay"
        );
        const capNote = document.getElementById("capNote");

        function formatEuro(value) {
          return new Intl.NumberFormat("de-DE", {
            style: "currency",
            currency: "EUR",
            maximumFractionDigits: 2,
          }).format(value);
        }

        function calculate() {
          const incomeTax = parseFloat(incomeTaxInput.value);
          const state = stateSelect.value;
          const denom = denomSelect.value;
          const marital = maritalSelect.value;
          const applyCap = applyCapCheckbox.checked;

          capNote.classList.add("hidden");

          if (isNaN(incomeTax) || incomeTax <= 0) {
            statusMessage.textContent =
              "Please enter a positive annual income tax amount.";
            resultsContent.classList.add("hidden");
            return;
          }

          if (denom === "none") {
            statusMessage.textContent =
              "You selected “No church tax”. In this case, no Kirchensteuer is due.";
            resultsContent.classList.add("hidden");
            return;
          }

          const baseRate = getRateForState(state);
          let basisTax = incomeTax;

          if (marital === "married-one") {
            basisTax = incomeTax / 2; // simplified assumption
          }

          let churchTax = basisTax * baseRate;

          // Simplified cap: max 3.5% of basisTax / 0.42 (approx. if income tax ~42% of taxable income)
          if (applyCap) {
            const approxTaxableIncome = basisTax / 0.42; // very rough
            const cap = approxTaxableIncome * 0.035; // 3.5% of taxable income
            if (churchTax > cap) {
              churchTax = cap;
              capNote.classList.remove("hidden");
            }
          }

          const monthly = churchTax / 12;
          const effectiveShare = (churchTax / incomeTax) * 100;

          rateDisplay.textContent = (baseRate * 100).toFixed(1) + " %";
          basisTaxDisplay.textContent = formatEuro(basisTax);
          annualTaxDisplay.textContent = formatEuro(churchTax);
          monthlyTaxDisplay.textContent = formatEuro(monthly);
          effectiveShareDisplay.textContent =
            effectiveShare.toFixed(2) + " % of your income tax";

          statusMessage.textContent =
            "Estimated church tax based on your inputs:";
          resultsContent.classList.remove("hidden");
        }

        calcBtn.addEventListener("click", calculate);
      });

