        const presets = {
          cola: { name: "Regular soda (330 ml)", sugarPerServing: 35 },
          juice: { name: "Fruit juice (250 ml)", sugarPerServing: 22 },
          energy: { name: "Energy drink (250 ml)", sugarPerServing: 27 },
          "sweetened-coffee": {
            name: "Sweetened coffee drink (medium)",
            sugarPerServing: 25,
          },
          "chocolate-bar": {
            name: "Chocolate bar (50 g)",
            sugarPerServing: 27,
          },
          cookies: { name: "Cookies (2 pieces)", sugarPerServing: 14 },
          icecream: { name: "Ice cream (1 scoop)", sugarPerServing: 12 },
          "flavored-yogurt": {
            name: "Flavored yogurt (150 g)",
            sugarPerServing: 15,
          },
          cereal: { name: "Sweetened cereal (40 g)", sugarPerServing: 12 },
        };

        function parseNumber(value, fallback = 0) {
          const n = parseFloat(value);
          return isNaN(n) ? fallback : n;
        }

        function getWeightKg() {
          let w = parseNumber(weightEl.value, 70);
          if (w <= 0) w = 70;
          if (weightUnitEl.value === "lb") {
            w = w / 2.2046;
          }
          return w;
        }

        function estimateCalories() {
          const weightKg = getWeightKg();
          let activityFactor = 30;
          switch (activityEl.value) {
            case "sedentary":
              activityFactor = 28;
              break;
            case "light":
              activityFactor = 30;
              break;
            case "moderate":
              activityFactor = 33;
              break;
            case "active":
              activityFactor = 36;
              break;
          }
          let ageFactor = 1.0;
          switch (ageEl.value) {
            case "child":
              ageFactor = 0.95;
              break;
            case "teen":
              ageFactor = 1.05;
              break;
            case "adult":
              ageFactor = 1.0;
              break;
            case "senior":
              ageFactor = 0.9;
              break;
          }
          let calories = weightKg * activityFactor * ageFactor;
          // Clamp to a reasonable range
          calories = Math.max(1000, Math.min(4000, calories));
          return calories;
        }

        function sugarPercentForGoal() {
          switch (goalEl.value) {
            case "standard":
              return 0.1;
            case "weight":
              return 0.075;
            case "heart":
              return 0.05;
            default:
              return 0.1;
          }
        }

        function updateLimit() {
          const calories = estimateCalories();
          const sugarPct = sugarPercentForGoal();
          const sugarKcal = calories * sugarPct;
          const grams = sugarKcal / 4;
          const teaspoons = grams / 4;

          limitGramsEl.textContent = grams.toFixed(0);
          limitTeaspoonsEl.textContent = teaspoons.toFixed(1);
          limitCaloriesEl.textContent = sugarKcal.toFixed(0);

          return grams;
        }

        function recalcIntake() {
          let totalG = 0;
          const rows = intakeRowsEl.querySelectorAll("tr");
          rows.forEach((row) => {
            const servingsInput = row.querySelector(".servings-input");
            const sugarInput = row.querySelector(".sugar-input");
            const servings = parseNumber(servingsInput.value, 0);
            const sugarPer = parseNumber(sugarInput.value, 0);
            if (servings > 0 && sugarPer > 0) {
              totalG += servings * sugarPer;
            }
          });

          const grams = totalG;
          const tsp = grams / 4;
          const kcal = grams * 4;

          intakeGramsEl.textContent = grams.toFixed(1);
          intakeTeaspoonsEl.textContent = tsp.toFixed(1);
          intakeCaloriesEl.textContent = kcal.toFixed(0);

          const limitG = updateLimit();
          let ratio = limitG > 0 ? grams / limitG : 0;
          if (!isFinite(ratio)) ratio = 0;

          // Status label
          let statusText = "within your limit";
          let color = "bg-green-500";
          if (ratio >= 0.75 && ratio < 1.0) {
            statusText = "close to your limit";
            color = "bg-yellow-400";
          } else if (ratio >= 1.0 && ratio < 1.5) {
            statusText = "above your recommended limit";
            color = "bg-orange-500";
          } else if (ratio >= 1.5) {
            statusText = "well above your recommended limit";
            color = "bg-red-500";
          } else if (ratio === 0) {
            statusText = "no added sugar logged";
            color = "bg-green-500";
          }
          statusLabelEl.textContent = statusText;

          // Progress bar width
          let pct = ratio * 50; // 100% limit -> 50% width, 200% -> 100%
          pct = Math.max(0, Math.min(100, pct));
          statusBarEl.style.width = pct + "%";
          statusBarEl.className = "h-2 " + color + " w-" + pct;
        }

        function createRow(name, sugarPerServing, servings = 1) {
          const tr = document.createElement("tr");
          tr.className = "border-t text-xs";
          tr.innerHTML = `
        <td class="px-2 py-1">
          <input type="text" class="item-name w-full border border-gray-200 rounded px-1 py-0.5" value="${name}">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" min="0" step="0.1" class="servings-input w-16 text-right border border-gray-200 rounded px-1 py-0.5" value="${servings}">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" min="0" step="0.1" class="sugar-input w-20 text-right border border-gray-200 rounded px-1 py-0.5" value="${sugarPerServing}">
        </td>
        <td class="px-2 py-1 text-center">
          <button type="button" class="remove-row text-red-500 text-xs hover:underline">Remove</button>
        </td>
      `;
          intakeRowsEl.appendChild(tr);
          noItemsMsgEl.classList.add("hidden");
          recalcIntake();
        }

        addPresetBtn.addEventListener("click", function () {
          const key = presetSelect.value;
          if (!key || !presets[key]) return;
          const p = presets[key];
          createRow(p.name, p.sugarPerServing, 1);
        });

        addCustomBtn.addEventListener("click", function () {
          createRow("Custom item", 10, 1);
        });

        intakeRowsEl.addEventListener("input", function (e) {
          if (
            e.target.classList.contains("servings-input") ||
            e.target.classList.contains("sugar-input")
          ) {
            recalcIntake();
          }
        });

        intakeRowsEl.addEventListener("click", function (e) {
          if (e.target.classList.contains("remove-row")) {
            const row = e.target.closest("tr");
            if (row) row.remove();
            if (!intakeRowsEl.querySelector("tr")) {
              noItemsMsgEl.classList.remove("hidden");
            }
            recalcIntake();
          }
        });

        [sexEl, ageEl, weightEl, weightUnitEl, activityEl, goalEl].forEach(
          (el) => {
            el.addEventListener("change", recalcIntake);
            el.addEventListener("input", recalcIntake);
          }
        );

        // Initialize with a sample soda to show functionality
        createRow("Regular soda (330 ml)", 35, 1);
      })();
    </script>

