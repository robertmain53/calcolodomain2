    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function calculateBoatLoan() {
        const price =
          parseFloat(document.getElementById("boatPrice").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const downPctInput = parseFloat(
          document.getElementById("downPct").value
        );
        const tradeIn =
          parseFloat(document.getElementById("tradeInValue").value) || 0;
        const tradeOwed =
          parseFloat(document.getElementById("tradeInOwed").value) || 0;
        const taxRate =
          (parseFloat(document.getElementById("taxRate").value) || 0) / 100;
        const fees = parseFloat(document.getElementById("fees").value) || 0;
        const termYears =
          parseInt(document.getElementById("termYears").value) || 1;
        const apr =
          (parseFloat(document.getElementById("interestRate").value) || 0) /
          100;
        const extra =
          parseFloat(document.getElementById("extraPayment").value) || 0;
        const biweekly = document.getElementById("frequencyToggle").checked;

        // Sync down payment % if user changed amount directly
        if (!isNaN(downPctInput) && price > 0) {
          const impliedDown = price * (downPctInput / 100);
          const currentDown = down;
          if (Math.abs(impliedDown - currentDown) > 1) {
            // prioritize explicit dollar down payment; recompute % instead
            document.getElementById("downPct").value = (
              (currentDown / price) *
              100
            ).toFixed(1);
          }
        }

        const netPrice = price - Math.max(tradeIn - tradeOwed, 0);
        const tax = Math.max(netPrice, 0) * taxRate;
        const amountFinanced = Math.max(netPrice - down + tax + fees, 0);

        const paymentsPerYear = biweekly ? 26 : 12;
        const periodRate = apr / paymentsPerYear;
        const nPeriods = termYears * paymentsPerYear;

        let basePayment = 0;
        if (apr === 0) {
          basePayment = nPeriods > 0 ? amountFinanced / nPeriods : 0;
        } else {
          const pow = Math.pow(1 + periodRate, nPeriods);
          basePayment = (amountFinanced * (periodRate * pow)) / (pow - 1);
        }
        const paymentWithExtra = basePayment + extra;

        // Build amortization with extra payments
        let balance = amountFinanced;
        let totalInterest = 0;
        let schedule = [];
        let period = 0;

        while (balance > 0 && period < nPeriods + 600) {
          // safety cap
          period++;
          const interestPortion = balance * periodRate;
          let principalPortion = paymentWithExtra - interestPortion;
          if (paymentWithExtra >= balance + interestPortion) {
            principalPortion = balance;
          }
          const actualPayment = principalPortion + interestPortion;
          balance = balance - principalPortion;
          if (balance < 1e-6) balance = 0;
          totalInterest += interestPortion;
          schedule.push({
            period: period,
            payment: actualPayment,
            principal: principalPortion,
            interest: interestPortion,
            balance: balance,
          });
          if (balance <= 0) break;
        }

        const totalPaid = amountFinanced + totalInterest;

        // Update summary UI
        document.getElementById("amountFinanced").textContent =
          formatCurrency(amountFinanced);
        const freqLabel = biweekly ? " / 2 weeks" : " / mo";
        document.getElementById("paymentAmount").textContent =
          formatCurrency(paymentWithExtra) + freqLabel;
        document.getElementById("totalInterest").textContent =
          formatCurrency(totalInterest);
        document.getElementById("totalCost").textContent =
          formatCurrency(totalPaid);

        // Payoff summary
        if (schedule.length > 0) {
          const years = Math.floor(schedule.length / paymentsPerYear);
          const monthsOrPeriods = schedule.length - years * paymentsPerYear;
          const unit = biweekly ? "payments" : "months";
          const payoffText = biweekly
            ? `Loan paid off in ${
                schedule.length
              } biweekly payments (~${years} years and ${(
                (monthsOrPeriods / paymentsPerYear) *
                12
              ).toFixed(0)} months).`
            : `Loan paid off in ${schedule.length} months (${years} years and ${monthsOrPeriods} months).`;
          document.getElementById("payoffSummary").textContent = payoffText;
        } else {
          document.getElementById("payoffSummary").textContent = "";
        }

        // Amortization table (first 360 rows to keep it light)
        const tbody = document.getElementById("amortizationBody");
        tbody.innerHTML = "";
        const maxRows = 360;
        schedule.slice(0, maxRows).forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b text-left">${row.period}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.payment
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.principal
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.interest
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          row.balance
        )}</td>
      `;
          tbody.appendChild(tr);
        });
        if (schedule.length > maxRows) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="5" class="px-2 py-1 text-center text-gray-500">Showing first ${maxRows} payments only.</td>`;
          tbody.appendChild(tr);
        }

        // Term comparison (e.g., 5, 10, 15, 20 years)
        const comparisonTerms = [5, 10, 15, 20];
        const compBody = document.getElementById("termComparisonBody");
        compBody.innerHTML = "";
        comparisonTerms.forEach((term) => {
          const n = term * paymentsPerYear;
          let pay = 0;
          if (apr === 0) {
            pay = n > 0 ? amountFinanced / n : 0;
          } else {
            const pow = Math.pow(1 + periodRate, n);
            pay = (amountFinanced * (periodRate * pow)) / (pow - 1);
          }
          const totalInt = pay * n - amountFinanced;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b text-left">${term}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          pay
        )}${freqLabel}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          totalInt
        )}</td>
      `;
          compBody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        const termYears = document.getElementById("termYears");
        const termSlider = document.getElementById("termSlider");
        const rateInput = document.getElementById("interestRate");
        const rateSlider = document.getElementById("rateSlider");
        const downPayment = document.getElementById("downPayment");
        const downPct = document.getElementById("downPct");
        const priceInput = document.getElementById("boatPrice");
        const freqToggle = document.getElementById("frequencyToggle");
        const freqLabelMonthly = document.getElementById("freqLabelMonthly");
        const freqLabelBiweekly = document.getElementById("freqLabelBiweekly");

        termSlider.addEventListener("input", () => {
          termYears.value = termSlider.value;
          calculateBoatLoan();
        });
        termYears.addEventListener("input", () => {
          let v = parseInt(termYears.value) || 1;
          if (v < 1) v = 1;
          if (v > 25) v = 25;
          termYears.value = v;
          termSlider.value = v;
          calculateBoatLoan();
        });

        rateSlider.addEventListener("input", () => {
          rateInput.value = parseFloat(rateSlider.value).toFixed(1);
          calculateBoatLoan();
        });
        rateInput.addEventListener("input", () => {
          let v = parseFloat(rateInput.value) || 0;
          if (v < 0) v = 0;
          if (v > 25) v = 25;
          rateInput.value = v.toFixed(1);
          rateSlider.value = v;
          calculateBoatLoan();
        });

        function syncDownFromPct() {
          const price = parseFloat(priceInput.value) || 0;
          const pct = parseFloat(downPct.value) || 0;
          if (price > 0) {
            const d = (price * pct) / 100;
            downPayment.value = d.toFixed(0);
          }
        }

        function syncPctFromDown() {
          const price = parseFloat(priceInput.value) || 0;
          const d = parseFloat(downPayment.value) || 0;
          if (price > 0) {
            const pct = (d / price) * 100;
            downPct.value = pct.toFixed(1);
          } else {
            downPct.value = "";
          }
        }

        downPct.addEventListener("input", () => {
          syncDownFromPct();
          calculateBoatLoan();
        });
        downPayment.addEventListener("input", () => {
          syncPctFromDown();
          calculateBoatLoan();
        });
        priceInput.addEventListener("input", () => {
          syncPctFromDown();
          calculateBoatLoan();
        });

        freqToggle.addEventListener("change", () => {
          if (freqToggle.checked) {
            freqLabelMonthly.classList.remove("font-semibold", "text-blue-600");
            freqLabelMonthly.classList.add("text-gray-500");
            freqLabelBiweekly.classList.remove("text-gray-500");
            freqLabelBiweekly.classList.add("font-semibold", "text-blue-600");
          } else {
            freqLabelBiweekly.classList.remove(
              "font-semibold",
              "text-blue-600"
            );
            freqLabelBiweekly.classList.add("text-gray-500");
            freqLabelMonthly.classList.remove("text-gray-500");
            freqLabelMonthly.classList.add("font-semibold", "text-blue-600");
          }
          calculateBoatLoan();
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", (e) => {
            e.preventDefault();
            calculateBoatLoan();
          });

        // Recalculate on key changes
        [
          "tradeInValue",
          "tradeInOwed",
          "taxRate",
          "fees",
          "extraPayment",
        ].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("input", calculateBoatLoan);
        });

        calculateBoatLoan();
      });
    </script>

