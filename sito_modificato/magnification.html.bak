    <script>
      // Tab handling
      const tabs = {
        size: {
          tab: document.getElementById("tab-size"),
          panel: document.getElementById("panel-size"),
        },
        distance: {
          tab: document.getElementById("tab-distance"),
          panel: document.getElementById("panel-distance"),
        },
        microscope: {
          tab: document.getElementById("tab-microscope"),
          panel: document.getElementById("panel-microscope"),
        },
      };

      function activateTab(name) {
        Object.keys(tabs).forEach((key) => {
          const { tab, panel } = tabs[key];
          if (key === name) {
            tab.classList.add("tab-active");
            tab.classList.remove("text-gray-700");
            panel.classList.remove("hidden");
            tab.setAttribute("aria-selected", "true");
          } else {
            tab.classList.remove("tab-active");
            tab.classList.add("text-gray-700");
            panel.classList.add("hidden");
            tab.setAttribute("aria-selected", "false");
          }
        });
      }

      tabs.size.tab.addEventListener("click", () => activateTab("size"));
      tabs.distance.tab.addEventListener("click", () =>
        activateTab("distance")
      );
      tabs.microscope.tab.addEventListener("click", () =>
        activateTab("microscope")
      );

      // Helper: parse unit select (handles simple numeric or '0.001m' typo gracefully)
      function unitFactor(value) {
        if (!value) return 1;
        if (!isNaN(Number(value))) return Number(value);
        // fallback: extract leading numeric
        const match = String(value).match(/^[\d.]+/);
        return match ? Number(match[0]) : 1;
      }

      // Size-based magnification
      const hoInput = document.getElementById("ho");
      const hiInput = document.getElementById("hi");
      const hoUnit = document.getElementById("hoUnit");
      const hiUnit = document.getElementById("hiUnit");
      const sizeResult = document.getElementById("sizeResult");
      const sizeM = document.getElementById("sizeM");
      const sizeInterpretation = document.getElementById("sizeInterpretation");

      document.getElementById("btnSizeCalc").addEventListener("click", () => {
        const ho = parseFloat(hoInput.value);
        const hi = parseFloat(hiInput.value);
        if (!isFinite(ho) || !isFinite(hi) || ho === 0) {
          alert(
            "Please enter valid non-zero values for object and image size."
          );
          return;
        }
        const hoSI = ho * unitFactor(hoUnit.value);
        const hiSI = hi * unitFactor(hiUnit.value);
        const M = hiSI / hoSI;
        sizeM.textContent = M.toFixed(3).replace(/\.?0+$/, "");
        let desc = "";
        if (Math.abs(M - 1) < 1e-3) {
          desc += "Image is the same size as the object. ";
        } else if (Math.abs(M) > 1) {
          desc += "Image is enlarged relative to the object. ";
        } else {
          desc += "Image is reduced relative to the object. ";
        }
        desc +=
          M >= 0
            ? "Image is upright (same orientation as object)."
            : "Image is inverted (flipped relative to object).";
        sizeInterpretation.textContent = desc;
        sizeResult.classList.remove("hidden");
      });

      document.getElementById("btnSizeSwap").addEventListener("click", () => {
        const hoVal = hoInput.value;
        const hiVal = hiInput.value;
        const hoUnitVal = hoUnit.value;
        const hiUnitVal = hiUnit.value;
        hoInput.value = hiVal;
        hiInput.value = hoVal;
        hoUnit.value = hiUnitVal;
        hiUnit.value = hoUnitVal;
        sizeResult.classList.add("hidden");
      });

      document.getElementById("btnSizeClear").addEventListener("click", () => {
        hoInput.value = "";
        hiInput.value = "";
        sizeResult.classList.add("hidden");
      });

      // Distance-based magnification
      const doInput = document.getElementById("do");
      const diInput = document.getElementById("di");
      const doUnit = document.getElementById("doUnit");
      const diUnit = document.getElementById("diUnit");
      const distanceResult = document.getElementById("distanceResult");
      const distanceM = document.getElementById("distanceM");
      const distanceInterpretation = document.getElementById(
        "distanceInterpretation"
      );

      document
        .getElementById("btnDistanceCalc")
        .addEventListener("click", () => {
          const d_o = parseFloat(doInput.value);
          const d_i = parseFloat(diInput.value);
          if (!isFinite(d_o) || !isFinite(d_i) || d_o === 0) {
            alert(
              "Please enter valid non-zero values for object and image distance."
            );
            return;
          }
          const doSI = d_o * unitFactor(doUnit.value);
          const diSI = d_i * unitFactor(diUnit.value);
          const M = -diSI / doSI;
          distanceM.textContent = M.toFixed(3).replace(/\.?0+$/, "");
          let desc = "";
          if (Math.abs(M - 1) < 1e-3) {
            desc += "Image is the same size as the object. ";
          } else if (Math.abs(M) > 1) {
            desc += "Image is enlarged relative to the object. ";
          } else {
            desc += "Image is reduced relative to the object. ";
          }
          desc +=
            M >= 0
              ? "Image is upright (virtual image for a single converging lens)."
              : "Image is inverted (real image for a single converging lens).";
          distanceInterpretation.textContent = desc;
          distanceResult.classList.remove("hidden");
        });

      document
        .getElementById("btnDistanceClear")
        .addEventListener("click", () => {
          doInput.value = "";
          diInput.value = "";
          distanceResult.classList.add("hidden");
        });

      // Microscope / telescope magnification
      const objMag = document.getElementById("objMag");
      const eyeMag = document.getElementById("eyeMag");
      const fObj = document.getElementById("fObj");
      const fEye = document.getElementById("fEye");
      const tubeLength = document.getElementById("tubeLength");
      const microscopeResult = document.getElementById("microscopeResult");
      const microscopeM = document.getElementById("microscopeM");
      const microscopeInterpretation = document.getElementById(
        "microscopeInterpretation"
      );

      document
        .getElementById("btnMicroscopeCalc")
        .addEventListener("click", () => {
          let Mobj = parseFloat(objMag.value);
          let Meye = parseFloat(eyeMag.value);

          // If direct magnifications not provided, estimate from focal lengths
          if (!isFinite(Mobj)) {
            const fO = parseFloat(fObj.value);
            const L = parseFloat(tubeLength.value);
            if (isFinite(fO) && isFinite(L) && fO !== 0) {
              Mobj = L / fO;
            }
          }
          if (!isFinite(Meye)) {
            const fE = parseFloat(fEye.value);
            const D = 250; // mm, near point
            if (isFinite(fE) && fE !== 0) {
              Meye = D / fE;
            }
          }

          if (!isFinite(Mobj) || !isFinite(Meye)) {
            alert(
              "Provide either objective & eyepiece magnifications, or enough focal length data to estimate them."
            );
            return;
          }

          const Mtotal = Mobj * Meye;
          microscopeM.textContent = Mtotal.toFixed(1).replace(/\.0$/, "");
          let desc = `Objective ≈ ${Mobj.toFixed(1).replace(
            /\.0$/,
            ""
          )}×, eyepiece ≈ ${Meye.toFixed(1).replace(/\.0$/, "")}×. `;
          if (Mtotal < 50) {
            desc +=
              "Suitable for low-power viewing (e.g., whole specimens or wide fields).";
          } else if (Mtotal < 400) {
            desc +=
              "Typical for general microscopy and many biological samples.";
          } else {
            desc +=
              "High-power magnification; image quality will depend strongly on optics and illumination.";
          }
          microscopeInterpretation.textContent = desc;
          microscopeResult.classList.remove("hidden");
        });

      document
        .getElementById("btnMicroscopeClear")
        .addEventListener("click", () => {
          objMag.value = "";
          eyeMag.value = "";
          fObj.value = "";
          fEye.value = "";
          tubeLength.value = "";
          microscopeResult.classList.add("hidden");
        });

      // Mobile menu script (basic)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", String(!expanded));
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
