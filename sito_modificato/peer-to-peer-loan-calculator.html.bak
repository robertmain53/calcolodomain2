    <script>
      // Utility: format currency and percent
      function fmtCurrency(v) {
        if (!isFinite(v)) return "$0.00";
        return (
          (v < 0 ? "-$" : "$") +
          Math.abs(v).toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }
      function fmtPercent(v) {
        if (!isFinite(v)) return "0.00%";
        return (
          v.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          }) + "%"
        );
      }

      // IRR via Newton-Raphson
      function computeIRR(cashflows, guess = 0.1) {
        let rate = guess;
        for (let i = 0; i < 50; i++) {
          let npv = 0;
          let dnpv = 0;
          for (let t = 0; t < cashflows.length; t++) {
            const cf = cashflows[t];
            const denom = Math.pow(1 + rate, t);
            npv += cf / denom;
            if (denom !== 0) {
              dnpv -= (t * cf) / (denom * (1 + rate));
            }
          }
          if (Math.abs(dnpv) < 1e-12) break;
          const newRate = rate - npv / dnpv;
          if (!isFinite(newRate)) break;
          if (Math.abs(newRate - rate) < 1e-7) {
            rate = newRate;
            break;
          }
          rate = newRate;
        }
        return rate;
      }

      function calculateLoan() {
        const amount =
          parseFloat(document.getElementById("loan-amount").value) || 0;
        const apr =
          (parseFloat(document.getElementById("apr").value) || 0) / 100;
        const termValue =
          parseFloat(document.getElementById("term-value").value) || 0;
        const termUnit = document.getElementById("term-unit").value;
        const frequency = document.getElementById("frequency").value;
        const originationPct =
          (parseFloat(document.getElementById("origination-fee").value) || 0) /
          100;
        const servicingPct =
          (parseFloat(document.getElementById("servicing-fee").value) || 0) /
          100;
        const extraEnabled = document.getElementById(
          "extra-payment-enabled"
        ).checked;
        const extraAmount = extraEnabled
          ? parseFloat(document.getElementById("extra-payment-amount").value) ||
            0
          : 0;

        if (amount <= 0 || apr < 0 || termValue <= 0) {
          alert("Please enter a positive loan amount, term and interest rate.");
          return;
        }

        let paymentsPerYear;
        if (frequency === "monthly") paymentsPerYear = 12;
        else if (frequency === "biweekly") paymentsPerYear = 26;
        else paymentsPerYear = 52;

        const totalYears = termUnit === "years" ? termValue : termValue / 12;
        const n = Math.round(totalYears * paymentsPerYear);
        const r = apr / paymentsPerYear;

        // Payment calculation
        let payment;
        if (r === 0) {
          payment = amount / n;
        } else {
          const pow = Math.pow(1 + r, n);
          payment = (amount * r * pow) / (pow - 1);
        }

        const startDate = new Date();
        const amortBody = document.getElementById("amortization-body");
        amortBody.innerHTML = "";

        let balance = amount;
        let totalInterest = 0;
        let totalPaid = 0;
        let totalFees = 0;

        const investorCashflows = [];
        const investorInitial = amount; // investor funds full amount
        const originationFee = amount * originationPct;
        const borrowerNetProceeds = amount - originationFee;

        // Investor initial cash flow at t=0 (negative outflow)
        investorCashflows.push(-investorInitial);

        for (let i = 1; i <= n; i++) {
          const interest = balance * r;
          let scheduledPayment = payment + extraAmount;
          if (scheduledPayment > balance + interest) {
            scheduledPayment = balance + interest; // final payment
          }
          const servicingFee = scheduledPayment * servicingPct;
          const principal = scheduledPayment - interest - servicingFee;
          balance = Math.max(0, balance - principal);

          totalInterest += interest;
          totalPaid += scheduledPayment;
          totalFees += servicingFee;

          // Investor receives payment minus servicing fee
          investorCashflows.push(scheduledPayment - servicingFee);

          const row = document.createElement("tr");
          const date = new Date(startDate);
          const daysOffset = Math.round((365 / paymentsPerYear) * (i - 1));
          date.setDate(date.getDate() + daysOffset);

          row.innerHTML = `
        <td class="px-3 py-1.5 text-gray-700">${i}</td>
        <td class="px-3 py-1.5 text-gray-500">${date
          .toISOString()
          .slice(0, 10)}</td>
        <td class="px-3 py-1.5 text-right">${fmtCurrency(scheduledPayment)}</td>
        <td class="px-3 py-1.5 text-right">${fmtCurrency(interest)}</td>
        <td class="px-3 py-1.5 text-right">${fmtCurrency(principal)}</td>
        <td class="px-3 py-1.5 text-right">${fmtCurrency(servicingFee)}</td>
        <td class="px-3 py-1.5 text-right">${fmtCurrency(balance)}</td>
      `;
          amortBody.appendChild(row);

          if (balance <= 0.01) break;
        }

        // Summary
        document.getElementById("summary-payment").textContent = fmtCurrency(
          payment + extraAmount
        );
        document.getElementById("summary-total-paid").textContent =
          fmtCurrency(totalPaid);
        document.getElementById("summary-total-interest").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("summary-total-fees").textContent = fmtCurrency(
          totalFees + originationFee
        );

        const ear = Math.pow(1 + apr / paymentsPerYear, paymentsPerYear) - 1;
        document.getElementById("summary-ear").textContent = fmtPercent(
          ear * 100
        );

        // IRR for investor
        let irr = 0;
        try {
          irr = computeIRR(investorCashflows);
        } catch (e) {
          irr = 0;
        }
        document.getElementById("summary-irr").textContent = fmtPercent(
          irr * 100
        );

        // Enable CSV download
        document.getElementById("download-csv").disabled = false;
      }

      function downloadCSV() {
        const table = document.querySelector("#amortization-body");
        if (!table || !table.rows.length) return;

        let csv = "Payment #,Date,Payment,Interest,Principal,Fees,Balance\n";
        Array.from(table.rows).forEach((row) => {
          const cells = Array.from(row.cells).map((td) =>
            td.textContent.replace(/,/g, "")
          );
          if (cells.length === 7 && !cells[0].includes("Enter loan details")) {
            csv += cells.join(",") + "\n";
          }
        });

        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "peer-to-peer-loan-amortization.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      function resetForm() {
        document.getElementById("loan-amount").value = 10000;
        document.getElementById("apr").value = 12;
        document.getElementById("term-value").value = 36;
        document.getElementById("term-unit").value = "months";
        document.getElementById("frequency").value = "monthly";
        document.getElementById("origination-fee").value = 3;
        document.getElementById("servicing-fee").value = 1;
        document.getElementById("extra-payment-enabled").checked = false;
        document.getElementById("extra-payment-amount").value = 100;
        document.getElementById("extra-payment-fields").classList.add("hidden");

        document.getElementById("amortization-body").innerHTML = `
      <tr>
        <td colspan="7" class="px-3 py-4 text-center text-gray-500">
          Enter loan details and click “Calculate loan” to see the full schedule.
        </td>
      </tr>
    `;
        document.getElementById("summary-payment").textContent = "$0.00";
        document.getElementById("summary-total-paid").textContent = "$0.00";
        document.getElementById("summary-total-interest").textContent = "$0.00";
        document.getElementById("summary-total-fees").textContent = "$0.00";
        document.getElementById("summary-ear").textContent = "0.00%";
        document.getElementById("summary-irr").textContent = "0.00%";
        document.getElementById("download-csv").disabled = true;
      }

      function setMode(mode) {
        const borrowerBtn = document.getElementById("mode-borrower");
        const investorBtn = document.getElementById("mode-investor");
        const mainTitle = document.getElementById("summary-main-title");
        const investorTitle = document.getElementById("summary-investor-title");
        const originationHelper = document.getElementById("origination-helper");
        const servicingHelper = document.getElementById("servicing-helper");

        if (mode === "borrower") {
          borrowerBtn.classList.add(
            "tab-active",
            "border-blue-600",
            "bg-blue-50",
            "text-blue-700"
          );
          investorBtn.classList.remove(
            "tab-active",
            "border-blue-600",
            "bg-blue-50",
            "text-blue-700"
          );
          investorBtn.classList.add("border-gray-300", "text-gray-700");
          mainTitle.textContent = "Borrower payments";
          investorTitle.textContent = "Investor returns";
          originationHelper.textContent =
            "Borrower receives less upfront; investor funds full amount.";
          servicingHelper.textContent =
            "Typically charged to investors as a % of each payment.";
        } else {
          investorBtn.classList.add(
            "tab-active",
            "border-blue-600",
            "bg-blue-50",
            "text-blue-700"
          );
          borrowerBtn.classList.remove(
            "tab-active",
            "border-blue-600",
            "bg-blue-50",
            "text-blue-700"
          );
          borrowerBtn.classList.add("border-gray-300", "text-gray-700");
          mainTitle.textContent = "Loan cash flows";
          investorTitle.textContent = "Net investor return";
          originationHelper.textContent =
            "Upfront platform fee as % of loan amount.";
          servicingHelper.textContent =
            "Ongoing servicing fee as % of each payment.";
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateLoan);
        document
          .getElementById("download-csv")
          .addEventListener("click", downloadCSV);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetForm);
        document
          .getElementById("extra-payment-enabled")
          .addEventListener("change", (e) => {
            document
              .getElementById("extra-payment-fields")
              .classList.toggle("hidden", !e.target.checked);
          });
        document
          .getElementById("mode-borrower")
          .addEventListener("click", () => setMode("borrower"));
        document
          .getElementById("mode-investor")
          .addEventListener("click", () => setMode("investor"));

        setMode("borrower");
      });

