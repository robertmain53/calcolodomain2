        function calculateBCG() {
            const marketGrowth = parseFloat(document.getElementById('marketGrowth').value);
            const relativeMarketShare = parseFloat(document.getElementById('relativeMarketShare').value);
            let result = '';

            if (isNaN(marketGrowth) || isNaN(relativeMarketShare)) {
                result = 'Please enter valid numbers.';
            } else if (marketGrowth > 10 && relativeMarketShare > 1) {
                result = 'Star';
            } else if (marketGrowth < 10 && relativeMarketShare > 1) {
                result = 'Cash Cow';
            } else if (marketGrowth > 10 && relativeMarketShare < 1) {
                result = 'Question Mark';
            } else {
                result = 'Dog';
            }

            document.getElementById('bcgResult').textContent = result;
        }
    </script>


