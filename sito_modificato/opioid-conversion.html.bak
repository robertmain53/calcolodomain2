    <script>
      // Equianalgesic factors to oral morphine (mg oral morphine per 1 mg drug, or per 1 mcg/h for patches where noted)
      const opioidFactors = {
        oral_morphine: { toMorphine: 1, unit: "mg/24h", outUnit: "mg/24h" },
        sciv_morphine: { toMorphine: 2, unit: "mg/24h", outUnit: "mg/24h" },
        oral_oxycodone: { toMorphine: 1.5, unit: "mg/24h", outUnit: "mg/24h" },
        sciv_oxycodone: { toMorphine: 3, unit: "mg/24h", outUnit: "mg/24h" },
        oral_hydromorphone: {
          toMorphine: 5,
          unit: "mg/24h",
          outUnit: "mg/24h",
        },
        sciv_hydromorphone: {
          toMorphine: 10,
          unit: "mg/24h",
          outUnit: "mg/24h",
        },
        oral_codeine: { toMorphine: 0.1, unit: "mg/24h", outUnit: "mg/24h" },
        oral_tramadol: { toMorphine: 0.2, unit: "mg/24h", outUnit: "mg/24h" },
        oral_tapentadol: { toMorphine: 0.4, unit: "mg/24h", outUnit: "mg/24h" },
        fentanyl_patch: { toMorphine: 2.4, unit: "mcg/h", outUnit: "mcg/h" }, // 1 mcg/h ≈ 2.4 mg OME/24h
        sciv_fentanyl: { toMorphine: 100, unit: "mcg/24h", outUnit: "mcg/24h" },
        oral_buprenorphine: {
          toMorphine: 30,
          unit: "mg/24h",
          outUnit: "mg/24h",
        }, // very approximate
        buprenorphine_patch: { toMorphine: 4, unit: "mcg/h", outUnit: "mcg/h" }, // 1 mcg/h ≈ 4 mg OME/24h (approx)
      };

      function updateFromUnit() {
        const fromOpioid = document.getElementById("fromOpioid").value;
        const fromUnitSpan = document.getElementById("fromUnit");
        const help = document.getElementById("fromHelp");
        if (!fromOpioid || !opioidFactors[fromOpioid]) {
          fromUnitSpan.textContent = "mg/24h";
          help.textContent = "Enter the total dose taken in 24 hours.";
          return;
        }
        const meta = opioidFactors[fromOpioid];
        fromUnitSpan.textContent = meta.unit;
        if (meta.unit === "mcg/h") {
          help.textContent =
            "Enter the patch strength in mcg/h (e.g. 25 mcg/h).";
        } else if (meta.unit === "mcg/24h") {
          help.textContent =
            "Enter the total 24‑hour dose in micrograms (mcg/24h).";
        } else {
          help.textContent = "Enter the total dose taken in 24 hours.";
        }
      }

      function formatNumber(val) {
        if (!isFinite(val)) return "–";
        if (val === 0) return "0";
        if (val < 0.01) return val.toExponential(2);
        if (val < 1) return val.toFixed(3);
        if (val < 10) return val.toFixed(2);
        if (val < 100) return val.toFixed(1);
        return val.toFixed(0);
      }

      function calculateConversion() {
        const fromOpioid = document.getElementById("fromOpioid").value;
        const toOpioid = document.getElementById("toOpioid").value;
        const fromDoseInput = document.getElementById("fromDose");
        const reductionInput = document.getElementById("reduction");

        // reset error styles
        fromDoseInput.classList.remove("input-invalid");
        reductionInput.classList.remove("input-invalid");

        const fromDose = parseFloat(fromDoseInput.value);
        const reduction = parseFloat(reductionInput.value);

        let valid = true;
        if (!fromOpioid || !opioidFactors[fromOpioid]) {
          valid = false;
          document.getElementById("fromOpioid").classList.add("input-invalid");
        } else {
          document
            .getElementById("fromOpioid")
            .classList.remove("input-invalid");
        }
        if (!toOpioid || !opioidFactors[toOpioid]) {
          valid = false;
          document.getElementById("toOpioid").classList.add("input-invalid");
        } else {
          document.getElementById("toOpioid").classList.remove("input-invalid");
        }
        if (!(fromDose > 0)) {
          valid = false;
          fromDoseInput.classList.add("input-invalid");
        }
        if (!(reduction >= 0 && reduction <= 80)) {
          valid = false;
          reductionInput.classList.add("input-invalid");
        }

        if (!valid) {
          document.getElementById("omeValue").textContent = "–";
          document.getElementById("targetRaw").textContent = "–";
          document.getElementById("targetReduced").textContent = "–";
          document.getElementById("targetRawUnit").textContent = "";
          document.getElementById("targetReducedUnit").textContent = "";
          return;
        }

        const fromMeta = opioidFactors[fromOpioid];
        const toMeta = opioidFactors[toOpioid];

        // Step 1: OME
        // For patches (mcg/h), convert to 24h equivalent inside factor definition already (factor is mg OME per 1 mcg/h)
        let ome;
        if (fromMeta.unit === "mcg/h") {
          ome = fromDose * fromMeta.toMorphine; // mg OME/24h
        } else if (fromMeta.unit === "mcg/24h") {
          // convert mcg to mg
          ome = (fromDose / 1000) * fromMeta.toMorphine;
        } else {
          ome = fromDose * fromMeta.toMorphine;
        }

        document.getElementById("omeValue").textContent = isFinite(ome)
          ? formatNumber(ome)
          : "–";

        // Step 2: target dose (24h)
        let target24h = ome / toMeta.toMorphine;
        let targetUnit = toMeta.outUnit || toMeta.unit;

        // For mcg/24h outputs, keep as mcg/24h; for mcg/h patches, convert back to mcg/h
        if (toMeta.unit === "mcg/h") {
          // factor defined as mg OME per 1 mcg/h, so target24h is in mcg/h already
          targetUnit = "mcg/h";
        } else if (toMeta.unit === "mcg/24h") {
          targetUnit = "mcg/24h";
        }

        const reduced = target24h * (1 - reduction / 100);

        document.getElementById("targetRaw").textContent =
          formatNumber(target24h);
        document.getElementById("targetReduced").textContent =
          formatNumber(reduced);
        document.getElementById("targetRawUnit").textContent = targetUnit
          ? " " + targetUnit
          : "";
        document.getElementById("targetReducedUnit").textContent = targetUnit
          ? " " + targetUnit
          : "";
        document.getElementById("reductionDisplay").textContent = isFinite(
          reduction
        )
          ? reduction.toFixed(0)
          : "–";
      }

      function resetForm() {
        document.getElementById("opioidForm").reset();
        document.getElementById("fromUnit").textContent = "mg/24h";
        document.getElementById("fromHelp").textContent =
          "Enter the total dose taken in 24 hours.";
        document.getElementById("omeValue").textContent = "–";
        document.getElementById("targetRaw").textContent = "–";
        document.getElementById("targetReduced").textContent = "–";
        document.getElementById("targetRawUnit").textContent = "";
        document.getElementById("targetReducedUnit").textContent = "";
        document.getElementById("reductionDisplay").textContent = "30";
        document
          .querySelectorAll(".input-invalid")
          .forEach((el) => el.classList.remove("input-invalid"));
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("fromOpioid")
          .addEventListener("change", updateFromUnit);
        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateConversion);
        document
          .getElementById("resetBtn")
          .addEventListener("click", resetForm);
        document.getElementById("reduction").addEventListener("input", () => {
          const val = parseFloat(document.getElementById("reduction").value);
          if (isFinite(val)) {
            document.getElementById("reductionDisplay").textContent =
              val.toFixed(0);
          }
        });

        document.querySelectorAll(".faq-question").forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            if (answer) {
              answer.classList.toggle("hidden");
            }
          });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
