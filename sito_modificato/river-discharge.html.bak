    <script>
      // Utility
      function formatNumber(value, decimals = 3) {
        if (!isFinite(value)) return "–";
        return Number(value).toFixed(decimals);
      }

      const state = {
        unitSystem: "si", // 'si' or 'us'
        panels: 6,
      };

      const panelsBody = document.getElementById("panels-body");
      const numPanelsInput = document.getElementById("num-panels");
      const defaultWidthInput = document.getElementById("default-width");
      const applyWidthBtn = document.getElementById("apply-width");
      const unitSiBtn = document.getElementById("unit-si");
      const unitUsBtn = document.getElementById("unit-us");
      const unitHint = document.getElementById("unit-hint");
      const totalQEl = document.getElementById("total-q");
      const totalQUnitEl = document.getElementById("total-q-unit");
      const summaryCard = document.getElementById("summary-card");
      const summaryText = document.getElementById("summary-text");
      const summaryAltUnits = document.getElementById("summary-alt-units");

      const thWidthUnit = document.getElementById("th-width-unit");
      const thDepthUnit = document.getElementById("th-depth-unit");
      const thVelUnit = document.getElementById("th-vel-unit");
      const thAreaUnit = document.getElementById("th-area-unit");
      const thQUnit = document.getElementById("th-q-unit");
      const defaultWidthUnit = document.getElementById("default-width-unit");

      function buildPanels(n) {
        panelsBody.innerHTML = "";
        for (let i = 0; i < n; i++) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-gray-600">${i + 1}</td>
        <td class="px-2 py-1">
          <input type="number" step="0.001" min="0" class="table-input panel-width" aria-label="Panel ${
            i + 1
          } width">
        </td>
        <td class="px-2 py-1">
          <input type="number" step="0.001" min="0" class="table-input panel-depth" aria-label="Panel ${
            i + 1
          } depth">
        </td>
        <td class="px-2 py-1">
          <input type="number" step="0.001" class="table-input panel-velocity" aria-label="Panel ${
            i + 1
          } velocity">
        </td>
        <td class="px-2 py-1 text-right text-gray-600">
          <span class="panel-area">–</span>
        </td>
        <td class="px-2 py-1 text-right text-gray-800 font-medium">
          <span class="panel-q">–</span>
        </td>
      `;
          panelsBody.appendChild(tr);
        }
      }

      function updateUnitLabels() {
        if (state.unitSystem === "si") {
          unitSiBtn.classList.add("bg-blue-600", "text-white");
          unitSiBtn.classList.remove("bg-white", "text-gray-700");
          unitUsBtn.classList.remove("bg-blue-600", "text-white");
          unitUsBtn.classList.add("bg-white", "text-gray-700");

          unitHint.textContent =
            "Using SI units: width in metres, depth in metres, velocity in m/s. Discharge will be in m³/s.";
          thWidthUnit.textContent = "(m)";
          thDepthUnit.textContent = "(m)";
          thVelUnit.textContent = "(m/s)";
          thAreaUnit.textContent = "(m²)";
          thQUnit.textContent = "(m³/s)";
          defaultWidthUnit.textContent = "m";
          totalQUnitEl.textContent = "m³/s";
        } else {
          unitUsBtn.classList.add("bg-blue-600", "text-white");
          unitUsBtn.classList.remove("bg-white", "text-gray-700");
          unitSiBtn.classList.remove("bg-blue-600", "text-white");
          unitSiBtn.classList.add("bg-white", "text-gray-700");

          unitHint.textContent =
            "Using US customary units: width in feet, depth in feet, velocity in ft/s. Discharge will be in ft³/s (cfs).";
          thWidthUnit.textContent = "(ft)";
          thDepthUnit.textContent = "(ft)";
          thVelUnit.textContent = "(ft/s)";
          thAreaUnit.textContent = "(ft²)";
          thQUnit.textContent = "(ft³/s)";
          defaultWidthUnit.textContent = "ft";
          totalQUnitEl.textContent = "ft³/s";
        }
      }

      function applyDefaultWidth() {
        const val = parseFloat(defaultWidthInput.value);
        if (!isFinite(val) || val <= 0) return;
        panelsBody.querySelectorAll(".panel-width").forEach((input) => {
          if (!input.value) input.value = val;
        });
      }

      function calculate() {
        let totalQ = 0;
        let totalArea = 0;
        let usedPanels = 0;

        const rows = panelsBody.querySelectorAll("tr");
        rows.forEach((row) => {
          const w = parseFloat(row.querySelector(".panel-width").value);
          const d = parseFloat(row.querySelector(".panel-depth").value);
          const v = parseFloat(row.querySelector(".panel-velocity").value);
          const areaEl = row.querySelector(".panel-area");
          const qEl = row.querySelector(".panel-q");

          if (isFinite(w) && w > 0 && isFinite(d) && d > 0 && isFinite(v)) {
            const area = w * d;
            const q = area * v;
            areaEl.textContent = formatNumber(area, 3);
            qEl.textContent = formatNumber(q, 3);
            totalQ += q;
            totalArea += area;
            usedPanels++;
          } else {
            areaEl.textContent = "–";
            qEl.textContent = "–";
          }
        });

        if (usedPanels === 0) {
          totalQEl.textContent = "–";
          summaryCard.classList.add("hidden");
          return;
        }

        totalQEl.textContent = formatNumber(totalQ, 3);

        const meanVel = totalArea > 0 ? totalQ / totalArea : NaN;
        const unitLabel = state.unitSystem === "si" ? "m³/s" : "ft³/s";
        const areaUnit = state.unitSystem === "si" ? "m²" : "ft²";
        const velUnit = state.unitSystem === "si" ? "m/s" : "ft/s";

        summaryText.textContent = `Q = ${formatNumber(
          totalQ,
          3
        )} ${unitLabel} from ${usedPanels} panels (total area ≈ ${formatNumber(
          totalArea,
          2
        )} ${areaUnit}, mean velocity ≈ ${formatNumber(
          meanVel,
          2
        )} ${velUnit}).`;

        // Alternative units
        if (state.unitSystem === "si") {
          const qCfs = totalQ * 35.3146667;
          summaryAltUnits.textContent = `Equivalent discharge ≈ ${formatNumber(
            qCfs,
            1
          )} ft³/s (cfs).`;
        } else {
          const qM3s = totalQ / 35.3146667;
          summaryAltUnits.textContent = `Equivalent discharge ≈ ${formatNumber(
            qM3s,
            3
          )} m³/s.`;
        }

        summaryCard.classList.remove("hidden");
      }

      function resetAll() {
        numPanelsInput.value = 6;
        defaultWidthInput.value = 1.0;
        state.panels = 6;
        buildPanels(state.panels);
        totalQEl.textContent = "–";
        summaryCard.classList.add("hidden");
      }

      // Event listeners
      numPanelsInput.addEventListener("change", () => {
        let n = parseInt(numPanelsInput.value, 10);
        if (!isFinite(n) || n < 1) n = 1;
        if (n > 40) n = 40;
        numPanelsInput.value = n;
        state.panels = n;
        buildPanels(n);
      });

      applyWidthBtn.addEventListener("click", applyDefaultWidth);
      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculate);
      document.getElementById("reset-btn").addEventListener("click", resetAll);

      unitSiBtn.addEventListener("click", () => {
        state.unitSystem = "si";
        updateUnitLabels();
      });
      unitUsBtn.addEventListener("click", () => {
        state.unitSystem = "us";
        updateUnitLabels();
      });

      // Initialize
      buildPanels(state.panels);
      updateUnitLabels();
    </script>

