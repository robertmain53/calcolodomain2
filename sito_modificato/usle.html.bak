    <script>
      function toggleDetails(id) {
        const el = document.getElementById(id);
        if (!el) return;
        el.classList.toggle("hidden");
      }

      function updateLSMode() {
        const mode =
          document.querySelector('input[name="ls-mode"]:checked')?.value ||
          "direct";
        document
          .getElementById("ls-direct-row")
          .classList.toggle("hidden", mode !== "direct");
        document
          .getElementById("ls-compute-row")
          .classList.toggle("hidden", mode !== "compute");
      }

      function estimateLS() {
        const lengthVal = parseFloat(
          document.getElementById("slope-length").value
        );
        const lengthUnit = document.getElementById("slope-length-unit").value;
        const slopePercent = parseFloat(
          document.getElementById("slope-percent").value
        );
        const out = document.getElementById("ls-estimate-output");

        out.textContent = "";

        if (
          isNaN(lengthVal) ||
          lengthVal <= 0 ||
          isNaN(slopePercent) ||
          slopePercent < 0
        ) {
          out.textContent =
            "Enter valid slope length and slope percent to estimate LS.";
          return;
        }

        // Convert length to meters if needed
        let Lm = lengthVal;
        if (lengthUnit === "ft") {
          Lm = lengthVal * 0.3048;
        }

        // Simplified LS approximation (for gentle to moderate slopes)
        const m = 0.5; // exponent for slope length
        const s = slopePercent / 100;
        const L = Math.pow(Lm / 22.13, m);
        const S = 10.8 * s + 0.03; // simple linear approximation for S
        let LS = L * S;

        if (!isFinite(LS) || LS < 0) {
          out.textContent = "Could not estimate LS with the given inputs.";
          return;
        }

        LS = Math.max(0, Math.min(LS, 50)); // clamp to a reasonable range
        document.getElementById("factor-ls").value = LS.toFixed(3);
        out.textContent =
          "Estimated LS ≈ " +
          LS.toFixed(3) +
          " (using a simplified approximation).";
      }

      function calculateUSLE() {
        const unitSystem = document.getElementById("unit-system").value;
        const R = parseFloat(document.getElementById("factor-r").value);
        const K = parseFloat(document.getElementById("factor-k").value);
        const LS = parseFloat(document.getElementById("factor-ls").value);
        const C = parseFloat(document.getElementById("factor-c").value);
        const P = parseFloat(document.getElementById("factor-p").value);

        const errorBox = document.getElementById("error-box");
        const resultsCard = document.getElementById("results-card");
        errorBox.classList.add("hidden");
        resultsCard.classList.add("hidden");
        errorBox.textContent = "";

        const missing = [];
        if (isNaN(R) || R < 0) missing.push("R");
        if (isNaN(K) || K < 0) missing.push("K");
        if (isNaN(LS) || LS < 0) missing.push("LS");
        if (isNaN(C) || C < 0) missing.push("C");
        if (isNaN(P) || P < 0) missing.push("P");

        if (missing.length > 0) {
          errorBox.textContent =
            "Please enter valid non‑negative values for: " +
            missing.join(", ") +
            ".";
          errorBox.classList.remove("hidden");
          return;
        }

        const A = R * K * LS * C * P;

        if (!isFinite(A)) {
          errorBox.textContent =
            "Calculation failed. Please check your inputs.";
          errorBox.classList.remove("hidden");
          return;
        }

        const areaVal = parseFloat(document.getElementById("area").value);
        const areaUnit = document.getElementById("area-unit").value;

        let totalLoss = null;
        if (!isNaN(areaVal) && areaVal > 0) {
          totalLoss = A * areaVal;
        }

        const unitLabel =
          unitSystem === "metric" ? "t/ha/year" : "tons/acre/year";
        document.getElementById("result-a").textContent =
          "Estimated average annual soil loss A ≈ " +
          A.toFixed(2) +
          " " +
          unitLabel +
          ".";

        if (totalLoss !== null) {
          const areaLabel = areaUnit === "ha" ? "hectares" : "acres";
          document.getElementById("result-total").textContent =
            "Total soil loss for " +
            areaVal +
            " " +
            areaLabel +
            " ≈ " +
            totalLoss.toFixed(2) +
            " tons per year.";
        } else {
          document.getElementById("result-total").textContent =
            "Enter a field area to also estimate total soil loss per year.";
        }

        resultsCard.classList.remove("hidden");
      }

      function resetUSLE() {
        document.getElementById("unit-system").value = "metric";
        document.getElementById("area").value = "";
        document.getElementById("area-unit").value = "ha";
        document.getElementById("factor-r").value = "";
        document.getElementById("factor-k").value = "";
        document.getElementById("factor-ls").value = "";
        document.getElementById("factor-c").value = "";
        document.getElementById("factor-p").value = "";
        document.getElementById("slope-length").value = "";
        document.getElementById("slope-percent").value = "";
        document.getElementById("slope-length-unit").value = "m";
        document.getElementById("ls-estimate-output").textContent = "";
        document.getElementById("error-box").classList.add("hidden");
        document.getElementById("results-card").classList.add("hidden");
      }

