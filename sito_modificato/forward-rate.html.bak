    <script>
      // Tab handling
      const tabs = {
        "tab-forward-rate": "panel-forward-rate",
        "tab-implied-domestic": "panel-implied-domestic",
        "tab-implied-foreign": "panel-implied-foreign",
      };

      Object.keys(tabs).forEach((tabId) => {
        document.getElementById(tabId).addEventListener("click", () => {
          // toggle tab styles
          Object.keys(tabs).forEach((id) => {
            const btn = document.getElementById(id);
            if (id === tabId) {
              btn.classList.add("tab-active");
              btn.classList.remove("text-gray-600");
            } else {
              btn.classList.remove("tab-active");
              btn.classList.add("text-gray-600");
            }
          });
          // toggle panels
          Object.entries(tabs).forEach(([id, panelId]) => {
            document
              .getElementById(panelId)
              .classList.toggle("hidden", id !== tabId);
          });
        });
      });

      function monthsToT(months, basis) {
        const m = Number(months);
        if (!isFinite(m) || m <= 0) return NaN;
        if (basis === "simple") return m / 12;
        const days = m * 30; // approximation
        if (basis === "act360") return days / 360;
        if (basis === "act365") return days / 365;
        return m / 12;
      }

      function calcForwardRate(S, rd, rf, T, comp) {
        const Sd = Number(S),
          rdd = rd,
          rff = rf,
          TT = T;
        if (comp === "annual") {
          return (Sd * Math.pow(1 + rdd, TT)) / Math.pow(1 + rff, TT);
        }
        // simple
        return (Sd * (1 + rdd * TT)) / (1 + rff * TT);
      }

      // Panel 1: forward rate
      document
        .getElementById("btnCalcForward")
        .addEventListener("click", () => {
          const S = parseFloat(document.getElementById("spotRate").value);
          const months = parseFloat(
            document.getElementById("tenorMonths").value
          );
          const rdPct = parseFloat(
            document.getElementById("domesticRate").value
          );
          const rfPct = parseFloat(
            document.getElementById("foreignRate").value
          );
          const basis = document.getElementById("dayCount").value;
          const comp = document.getElementById("compounding").value;

          if (
            !isFinite(S) ||
            S <= 0 ||
            !isFinite(months) ||
            months <= 0 ||
            !isFinite(rdPct) ||
            !isFinite(rfPct)
          ) {
            alert(
              "Please enter valid positive values for spot, tenor, and interest rates."
            );
            return;
          }

          const T = monthsToT(months, basis);
          if (!isFinite(T) || T <= 0) {
            alert("Invalid tenor. Please check the maturity in months.");
            return;
          }

          const rd = rdPct / 100;
          const rf = rfPct / 100;

          const F = calcForwardRate(S, rd, rf, T, comp);
          if (!isFinite(F) || F <= 0) {
            alert("Calculation error. Please check your inputs.");
            return;
          }

          const resultBox = document.getElementById("forwardResultBox");
          const out = document.getElementById("forwardRateOutput");
          const premInfo = document.getElementById("forwardPremiumInfo");

          out.textContent = F.toFixed(6);

          const premium = (F - S) / S;
          const annualized = premium / T;
          let desc;
          if (Math.abs(premium) < 1e-8) {
            desc =
              "The forward rate is effectively equal to spot (no premium or discount).";
          } else if (premium > 0) {
            desc = `Foreign currency trades at a forward premium of ${(
              annualized * 100
            ).toFixed(3)}% per year.`;
          } else {
            desc = `Foreign currency trades at a forward discount of ${Math.abs(
              annualized * 100
            ).toFixed(3)}% per year.`;
          }
          premInfo.textContent = desc;

          resultBox.classList.remove("hidden");
        });

      document
        .getElementById("btnResetForward")
        .addEventListener("click", () => {
          ["spotRate", "tenorMonths", "domesticRate", "foreignRate"].forEach(
            (id) => {
              document.getElementById(id).value = "";
            }
          );
          document.getElementById("dayCount").value = "simple";
          document.getElementById("compounding").value = "simple";
          document.getElementById("forwardResultBox").classList.add("hidden");
        });

      // Panel 2: implied domestic rate
      document.getElementById("btnCalcDom").addEventListener("click", () => {
        const S = parseFloat(document.getElementById("spotRateDom").value);
        const F = parseFloat(document.getElementById("forwardRateDom").value);
        const months = parseFloat(
          document.getElementById("tenorMonthsDom").value
        );
        const rfPct = parseFloat(
          document.getElementById("foreignRateDom").value
        );
        const basis = document.getElementById("dayCountDom").value;
        const comp = document.getElementById("compoundingDom").value;

        if (
          !isFinite(S) ||
          S <= 0 ||
          !isFinite(F) ||
          F <= 0 ||
          !isFinite(months) ||
          months <= 0 ||
          !isFinite(rfPct)
        ) {
          alert(
            "Please enter valid positive values for spot, forward, tenor, and foreign rate."
          );
          return;
        }

        const T = monthsToT(months, basis);
        if (!isFinite(T) || T <= 0) {
          alert("Invalid tenor. Please check the maturity in months.");
          return;
        }

        const rf = rfPct / 100;
        let rd;
        if (comp === "annual") {
          // (1+rd)^T = (F/S) * (1+rf)^T  => rd = ((F/S)*(1+rf)^T)^(1/T) - 1
          const ratio = (F / S) * Math.pow(1 + rf, T);
          if (ratio <= 0) {
            alert(
              "Inputs imply a negative or invalid domestic rate under annual compounding."
            );
            return;
          }
          rd = Math.pow(ratio, 1 / T) - 1;
        } else {
          // simple: rd = ( (F/S)*(1+rf*T) - 1 ) / T
          rd = ((F / S) * (1 + rf * T) - 1) / T;
        }

        if (!isFinite(rd)) {
          alert("Calculation error. Please check your inputs.");
          return;
        }

        document.getElementById("domRateOutput").textContent =
          (rd * 100).toFixed(4) + " %";
        document.getElementById("domResultBox").classList.remove("hidden");
      });

      document.getElementById("btnResetDom").addEventListener("click", () => {
        [
          "spotRateDom",
          "forwardRateDom",
          "tenorMonthsDom",
          "foreignRateDom",
        ].forEach((id) => {
          document.getElementById(id).value = "";
        });
        document.getElementById("dayCountDom").value = "simple";
        document.getElementById("compoundingDom").value = "simple";
        document.getElementById("domResultBox").classList.add("hidden");
      });

      // Panel 3: implied foreign rate
      document.getElementById("btnCalcFor").addEventListener("click", () => {
        const S = parseFloat(document.getElementById("spotRateFor").value);
        const F = parseFloat(document.getElementById("forwardRateFor").value);
        const months = parseFloat(
          document.getElementById("tenorMonthsFor").value
        );
        const rdPct = parseFloat(
          document.getElementById("domesticRateFor").value
        );
        const basis = document.getElementById("dayCountFor").value;
        const comp = document.getElementById("compoundingFor").value;

        if (
          !isFinite(S) ||
          S <= 0 ||
          !isFinite(F) ||
          F <= 0 ||
          !isFinite(months) ||
          months <= 0 ||
          !isFinite(rdPct)
        ) {
          alert(
            "Please enter valid positive values for spot, forward, tenor, and domestic rate."
          );
          return;
        }

        const T = monthsToT(months, basis);
        if (!isFinite(T) || T <= 0) {
          alert("Invalid tenor. Please check the maturity in months.");
          return;
        }

        const rd = rdPct / 100;
        let rf;
        if (comp === "annual") {
          // (1+rf)^T = (1+rd)^T / (F/S)  => rf = ((1+rd)^T / (F/S))^(1/T) - 1
          const ratio = Math.pow(1 + rd, T) / (F / S);
          if (ratio <= 0) {
            alert(
              "Inputs imply a negative or invalid foreign rate under annual compounding."
            );
            return;
          }
          rf = Math.pow(ratio, 1 / T) - 1;
        } else {
          // simple: rf = ( (1+rd*T)/(F/S) - 1 ) / T
          rf = ((1 + rd * T) / (F / S) - 1) / T;
        }

        if (!isFinite(rf)) {
          alert("Calculation error. Please check your inputs.");
          return;
        }

        document.getElementById("forRateOutput").textContent =
          (rf * 100).toFixed(4) + " %";
        document.getElementById("forResultBox").classList.remove("hidden");
      });

      document.getElementById("btnResetFor").addEventListener("click", () => {
        [
          "spotRateFor",
          "forwardRateFor",
          "tenorMonthsFor",
          "domesticRateFor",
        ].forEach((id) => {
          document.getElementById(id).value = "";
        });
        document.getElementById("dayCountFor").value = "simple";
        document.getElementById("compoundingFor").value = "simple";
        document.getElementById("forResultBox").classList.add("hidden");
      });

