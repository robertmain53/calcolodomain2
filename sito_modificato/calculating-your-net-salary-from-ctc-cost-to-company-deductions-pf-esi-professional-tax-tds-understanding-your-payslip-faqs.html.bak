    <script>
      // Utility: format currency INR
      function formatINR(value) {
        if (!isFinite(value)) return "₹0";
        const rounded = Math.round(value);
        return "₹" + rounded.toString().replace(/\B(?=(\d{2})+(?!\d))/g, ",");
      }

      function getSelectedRegime() {
        const radios = document.querySelectorAll('input[name="regime"]');
        for (const r of radios) if (r.checked) return r.value;
        return "new";
      }

      function estimateProfessionalTax(state, grossMonthly) {
        if (state === "none") return 0;
        // Very simplified slabs, for estimation only
        if (state === "karnataka") {
          if (grossMonthly <= 15000) return 0;
          if (grossMonthly <= 25000) return 150;
          return 200;
        }
        if (state === "maharashtra") {
          if (grossMonthly <= 7500) return 0;
          if (grossMonthly <= 10000) return 175;
          return 200;
        }
        if (state === "telangana") {
          if (grossMonthly <= 15000) return 0;
          if (grossMonthly <= 20000) return 150;
          return 200;
        }
        if (state === "westbengal") {
          if (grossMonthly <= 10000) return 0;
          if (grossMonthly <= 15000) return 110;
          if (grossMonthly <= 25000) return 130;
          if (grossMonthly <= 40000) return 150;
          return 200;
        }
        return 0;
      }

      function computeIncomeTaxAnnual(taxable, regime) {
        if (taxable <= 0) return 0;
        let tax = 0;

        if (regime === "new") {
          // New regime slabs (approx, for illustration)
          const slabs = [
            { upTo: 300000, rate: 0 },
            { upTo: 700000, rate: 0.05 },
            { upTo: 1000000, rate: 0.1 },
            { upTo: 1200000, rate: 0.15 },
            { upTo: 1500000, rate: 0.2 },
            { upTo: Infinity, rate: 0.3 },
          ];
          let prev = 0;
          for (const s of slabs) {
            if (taxable > prev) {
              const amt = Math.min(taxable, s.upTo) - prev;
              tax += amt * s.rate;
              prev = s.upTo;
            } else break;
          }
        } else {
          // Old regime slabs (approx, no extra deductions)
          const slabs = [
            { upTo: 250000, rate: 0 },
            { upTo: 500000, rate: 0.05 },
            { upTo: 1000000, rate: 0.2 },
            { upTo: Infinity, rate: 0.3 },
          ];
          let prev = 0;
          for (const s of slabs) {
            if (taxable > prev) {
              const amt = Math.min(taxable, s.upTo) - prev;
              tax += amt * s.rate;
              prev = s.upTo;
            } else break;
          }
        }

        // Rebate under 87A (very simplified)
        if (regime === "new" && taxable <= 700000) {
          tax = 0;
        } else if (regime === "old" && taxable <= 500000) {
          tax = 0;
        }

        // 4% cess
        tax *= 1.04;
        return tax;
      }

      function recalc() {
        const ctc = parseFloat(document.getElementById("ctc").value) || 0;
        const bonusPct =
          parseFloat(document.getElementById("bonusPct").value) || 0;
        const gratuityPct =
          parseFloat(document.getElementById("gratuityPct").value) || 0;
        const basicPct =
          parseFloat(document.getElementById("basicPct").value) || 0;
        const hraPct = parseFloat(document.getElementById("hraPct").value) || 0;
        const pfPct = parseFloat(document.getElementById("pfPct").value) || 0;
        const pfCap = document.getElementById("pfCap").checked;
        const state = document.getElementById("state").value;
        const esiEnabled = document.getElementById("esiEnabled").checked;
        const regime = getSelectedRegime();

        if (ctc <= 0) {
          const ids = [
            "netMonthly",
            "netAnnual",
            "grossMonthly",
            "dedMonthly",
            "pfMonthly",
            "tdsMonthly",
            "basicMonthly",
            "hraMonthly",
            "allowMonthly",
            "bonusMonthly",
            "pfMonthly2",
            "esiMonthly",
            "ptMonthly",
            "tdsMonthly2",
            "pfEmployerAnnual",
            "esiEmployerAnnual",
            "gratuityAnnual",
            "fixedCashAnnual",
          ];
          ids.forEach((id) => (document.getElementById(id).textContent = "₹0"));
          return;
        }

        // Step 1: split CTC into bonus and provisional fixed
        const bonusAnnual = ctc * (bonusPct / 100);
        const provisionalFixed = ctc - bonusAnnual;

        // We'll iteratively approximate employer PF/ESI/gratuity from provisionalFixed
        // Start with a guess: assume employer components are small fraction
        let fixedCash = provisionalFixed * 0.9;
        for (let i = 0; i < 5; i++) {
          const basicAnnual = fixedCash * (basicPct / 100);
          const basicMonthly = basicAnnual / 12;
          let pfBaseMonthly = basicMonthly;
          if (pfCap) pfBaseMonthly = Math.min(pfBaseMonthly, 15000);
          const pfEmployerMonthly = pfBaseMonthly * (pfPct / 100);
          const pfEmployerAnnual = pfEmployerMonthly * 12;

          const hraAnnual = basicAnnual * (hraPct / 100);
          const allowancesAnnual = fixedCash - basicAnnual - hraAnnual;
          const grossAnnual =
            basicAnnual + hraAnnual + allowancesAnnual + bonusAnnual;
          const grossMonthly = grossAnnual / 12;

          let esiEmployerAnnual = 0;
          if (esiEnabled && grossMonthly <= 21000) {
            esiEmployerAnnual = grossAnnual * 0.0325; // 3.25%
          }

          const gratuityAnnual = basicAnnual * (gratuityPct / 100);

          const employerComponents =
            pfEmployerAnnual + esiEmployerAnnual + gratuityAnnual;
          fixedCash = provisionalFixed - employerComponents;
        }

        // Final structure based on fixedCash
        const basicAnnual = fixedCash * (basicPct / 100);
        const hraAnnual = basicAnnual * (hraPct / 100);
        const allowancesAnnual = fixedCash - basicAnnual - hraAnnual;
        const grossAnnual =
          basicAnnual + hraAnnual + allowancesAnnual + bonusAnnual;
        const grossMonthly = grossAnnual / 12;

        const basicMonthly = basicAnnual / 12;
        const hraMonthly = hraAnnual / 12;
        const allowMonthly = allowancesAnnual / 12;
        const bonusMonthly = bonusAnnual / 12;

        // PF employee/employer
        let pfBaseMonthly = basicMonthly;
        if (pfCap) pfBaseMonthly = Math.min(pfBaseMonthly, 15000);
        const pfEmployeeMonthly = pfBaseMonthly * (pfPct / 100);
        const pfEmployerMonthly = pfEmployeeMonthly; // assume same rate
        const pfEmployerAnnual = pfEmployerMonthly * 12;

        // ESI employee/employer
        let esiEmployeeAnnual = 0,
          esiEmployerAnnual = 0;
        if (esiEnabled && grossMonthly <= 21000) {
          esiEmployeeAnnual = grossAnnual * 0.0075; // 0.75%
          esiEmployerAnnual = grossAnnual * 0.0325; // 3.25%
        }
        const esiEmployeeMonthly = esiEmployeeAnnual / 12;

        // Professional tax
        const ptMonthly = estimateProfessionalTax(state, grossMonthly);
        const ptAnnual = ptMonthly * 12;

        // Income tax (TDS)
        const standardDeduction = 50000;
        const taxableIncome = Math.max(0, grossAnnual - standardDeduction);
        const taxAnnual = computeIncomeTaxAnnual(taxableIncome, regime);
        const tdsMonthly = taxAnnual / 12;

        // Net salary
        const totalDedMonthly =
          pfEmployeeMonthly + esiEmployeeMonthly + ptMonthly + tdsMonthly;
        const netMonthly = grossMonthly - totalDedMonthly;
        const netAnnual = netMonthly * 12;

        // Employer components
        const gratuityAnnual = basicAnnual * (gratuityPct / 100);
        const fixedCashAnnual = fixedCash;

        // Update UI
        document.getElementById("bonusPctVal").textContent =
          bonusPct.toString();
        document.getElementById("gratuityPctVal").textContent =
          gratuityPct.toString();
        document.getElementById("basicPctVal").textContent =
          basicPct.toString();
        document.getElementById("hraPctVal").textContent = hraPct.toString();
        document.getElementById("pfPctVal").textContent = pfPct.toString();

        document.getElementById("netMonthly").textContent =
          formatINR(netMonthly);
        document.getElementById("netAnnual").textContent = formatINR(netAnnual);
        document.getElementById("grossMonthly").textContent =
          formatINR(grossMonthly);
        document.getElementById("dedMonthly").textContent =
          formatINR(totalDedMonthly);
        document.getElementById("pfMonthly").textContent =
          formatINR(pfEmployeeMonthly);
        document.getElementById("tdsMonthly").textContent =
          formatINR(tdsMonthly);

        document.getElementById("basicMonthly").textContent =
          formatINR(basicMonthly);
        document.getElementById("hraMonthly").textContent =
          formatINR(hraMonthly);
        document.getElementById("allowMonthly").textContent =
          formatINR(allowMonthly);
        document.getElementById("bonusMonthly").textContent =
          formatINR(bonusMonthly);

        document.getElementById("pfMonthly2").textContent =
          formatINR(pfEmployeeMonthly);
        document.getElementById("esiMonthly").textContent =
          formatINR(esiEmployeeMonthly);
        document.getElementById("ptMonthly").textContent = formatINR(ptMonthly);
        document.getElementById("tdsMonthly2").textContent =
          formatINR(tdsMonthly);

        document.getElementById("pfEmployerAnnual").textContent =
          formatINR(pfEmployerAnnual);
        document.getElementById("esiEmployerAnnual").textContent =
          formatINR(esiEmployerAnnual);
        document.getElementById("gratuityAnnual").textContent =
          formatINR(gratuityAnnual);
        document.getElementById("fixedCashAnnual").textContent =
          formatINR(fixedCashAnnual);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const inputs = [
          "ctc",
          "bonusPct",
          "gratuityPct",
          "basicPct",
          "hraPct",
          "pfPct",
          "pfCap",
          "state",
          "esiEnabled",
        ];
        inputs.forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          el.addEventListener("input", recalc);
          el.addEventListener("change", recalc);
        });
        document.querySelectorAll('input[name="regime"]').forEach((r) => {
          r.addEventListener("change", recalc);
        });
        document.querySelectorAll(".preset-ctc").forEach((btn) => {
          btn.addEventListener("click", () => {
            const val = parseFloat(btn.getAttribute("data-ctc")) || 0;
            document.getElementById("ctc").value = val;
            recalc();
          });
        });
        recalc();
      });
    </script>

