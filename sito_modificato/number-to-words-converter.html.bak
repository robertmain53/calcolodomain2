    // Number-to-words logic
    const smallNumbers = [
      "zero","one","two","three","four","five","six","seven","eight","nine",
      "ten","eleven","twelve","thirteen","fourteen","fifteen","sixteen","seventeen","eighteen","nineteen"
    ];
    const tensWords = ["","","twenty","thirty","forty","fifty","sixty","seventy","eighty","ninety"];

    function chunkNumberIntl(numStr) {
      // break into groups of 3 from right: 1,234,567 -> ["1","234","567"]
      const out = [];
      let i = numStr.length;
      while (i > 0) {
        const start = Math.max(i - 3, 0);
        out.unshift(numStr.slice(start, i));
        i = start;
      }
      return out;
    }

    function chunkNumberIndian(numStr) {
      // Indian: rightmost 3 digits, then groups of 2
      const out = [];
      let n = numStr.length;
      if (n > 3) {
        out.unshift(numStr.slice(n-3));
        n -= 3;
        while (n > 0) {
          const start = Math.max(n - 2, 0);
          out.unshift(numStr.slice(start, n));
          n = start;
        }
      } else {
        out.unshift(numStr);
      }
      return out;
    }

    function threeDigitToWords(num) {
      num = Number(num);
      let words = [];
      if (num >= 100) {
        const h = Math.floor(num / 100);
        words.push(smallNumbers[h] + " hundred");
        num = num % 100;
        if (num > 0) words.push("and");
      }
      if (num >= 20) {
        const t = Math.floor(num / 10);
        words.push(tensWords[t]);
        const r = num % 10;
        if (r > 0) words.push(smallNumbers[r]);
      } else if (num > 0) {
        words.push(smallNumbers[num]);
      }
      return words.join(" ");
    }

    const intlScales = ["", "thousand", "million", "billion", "trillion", "quadrillion"];
    const indianScales = ["", "thousand", "lakh", "crore", "arab", "kharab"];

    function integerToWordsIntl(numStr) {
      if (numStr === "0") return "zero";
      const chunks = chunkNumberIntl(numStr);
      const parts = [];
      const total = chunks.length;
      for (let i = 0; i < total; i++) {
        const chunk = Number(chunks[i]);
        if (chunk === 0) continue;
        const words = threeDigitToWords(chunk);
        const scale = intlScales[total - i - 1];
        parts.push(words + (scale ? " " + scale : ""));
      }
      return parts.join(" ").replace(/\s+/g, " ").trim();
    }

    function integerToWordsIndian(numStr) {
      if (numStr === "0") return "zero";
      const chunks = chunkNumberIndian(numStr);
      const parts = [];
      const total = chunks.length;
      for (let i = 0; i < total; i++) {
        const chunk = Number(chunks[i]);
        if (chunk === 0) continue;
        let words;
        if (i === total - 1) {
          // last chunk (rightmost) uses 3-digit rules
          words = threeDigitToWords(chunk);
        } else {
          // other chunks up to 2 digits
          if (chunk < 20) {
            words = smallNumbers[chunk];
          } else {
            const tens = Math.floor(chunk / 10);
            const ones = chunk % 10;
            words = tensWords[tens] + (ones ? " " + smallNumbers[ones] : "");
          }
        }
        const scale = indianScales[total - i - 1] || "";
        parts.push(words + (scale ? " " + scale : ""));
      }
      return parts.join(" ").replace(/\s+/g, " ").trim();
    }

    function convertNumberToWords(numStr, system, mode, currencyLabel, decimalLabel) {
      numStr = numStr.trim();
      if (numStr === "") return "";
      // handle sign
      let sign = "";
      if (numStr.startsWith("-")) {
        sign = "minus ";
        numStr = numStr.slice(1);
      }
      // split decimal
      const parts = numStr.split(".");
      const intPart = parts[0].replace(/[^0-9]/g, "") || "0";
      const decPart = parts[1] ? parts[1].replace(/[^0-9]/g, "") : "";

      let intWords = system === "indian" ? integerToWordsIndian(intPart) : integerToWordsIntl(intPart);
      let result = sign + intWords;

      if (decPart && mode === "plain") {
        const digits = decPart.split("").map(d => smallNumbers[Number(d)]).join(" ");
        result += " point " + digits;
      } else if (decPart && mode === "cheque") {
        // typical 2 decimal places
        let two = decPart.slice(0, 2);
        if (two.length === 1) two = two + "0";
        result += " " + decimalLabel + " " + two + "/100";
        if (currencyLabel) result += " " + currencyLabel;
      } else if (!decPart && mode === "cheque" && currencyLabel) {
        result += " " + currencyLabel;
      }

      return result.trim();
    }

    const numInput = document.getElementById('number-input');
    const systemSel = document.getElementById('system');
    const modeSel = document.getElementById('mode');
    const currencyInput = document.getElementById('currency-label');
    const decimalInput = document.getElementById('decimal-label');
    const convertBtn = document.getElementById('convert-btn');
    const outputEl = document.getElementById('words-output');
    const errorEl = document.getElementById('number-error');

    function doConvert() {
      errorEl.textContent = "";
      const value = numInput.value;
      // basic validation
      if (!value || !value.match(/^-?\d+(\.\d+)?$/)) {
        // allow commas? We can normalize
        const cleaned = value.replace(/,/g, "");
        if (!cleaned.match(/^-?\d+(\.\d+)?$/)) {
          errorEl.textContent = "Please enter a valid number (digits, optional decimal). Commas are okay.";
        }
      }
      const cleaned = value.replace(/,/g, "");
      const system = systemSel.value;
      const mode = modeSel.value;
      const curr = currencyInput.value.trim();
      const decLabel = decimalInput.value.trim() || "and";
      const words = convertNumberToWords(cleaned, system, mode, curr, decLabel);
      outputEl.textContent = words || "—";
    }

    convertBtn.addEventListener('click', doConvert);
    numInput.addEventListener('keyup', (e) => {
      if (e.key === "Enter") doConvert();
    });

    // initial
    doConvert();
  </script>

