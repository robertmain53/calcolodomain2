            <script>
              document.addEventListener('DOMContentLoaded', function() {
                const inputElements = {
                    a: document.getElementById('side-a'),
                    b: document.getElementById('side-b'),
                    c: document.getElementById('side-c'),
                    alpha: document.getElementById('angle-alpha'),
                    beta: document.getElementById('angle-beta')
                };
                const calculateBtn = document.getElementById('calculate-btn');
                const clearBtn = document.getElementById('clear-btn');
                const resultsContainer = document.getElementById('results-container');
                const errorMessage = document.getElementById('error-message');
                
                const resultSides = document.getElementById('result-sides');
                const resultAngles = document.getElementById('result-angles');
                const resultArea = document.getElementById('result-area');
                const resultPerimeter = document.getElementById('result-perimeter');
                const stepByStep = document.getElementById('step-by-step');

                const R_TO_D = 180 / Math.PI;
                const D_TO_R = Math.PI / 180;
                
                // Helper functions
                function parseInput(val) {
                    const num = parseFloat(val);
                    return (num > 0 && !isNaN(num)) ? num : NaN;
                }
                
                function formatNumber(num) {
                    if (Math.abs(num) < 1e-10) return '0';
                    return parseFloat(num.toFixed(6)).toString();
                }

                function showError(message) {
                    errorMessage.textContent = `Error: ${message}`;
                    resultsContainer.classList.add('hidden');
                }
                
                function clearInputs() {
                    Object.values(inputElements).forEach(input => input.value = '');
                    resultsContainer.classList.add('hidden');
                    errorMessage.textContent = '';
                }

                clearBtn.addEventListener('click', clearInputs);

                // Main Solver Logic
                calculateBtn.addEventListener('click', () => {
                    let a = parseInput(inputElements.a.value);
                    let b = parseInput(inputElements.b.value);
                    let c = parseInput(inputElements.c.value);
                    let alpha = parseInput(inputElements.alpha.value);
                    let beta = parseInput(inputElements.beta.value);

                    let knownSides = [a, b, c].filter(n => !isNaN(n)).length;
                    let knownAngles = [alpha, beta].filter(n => !isNaN(n)).length; // Excludes 90°

                    let steps = '';
                    
                    try {
                        // 1. Initial Validation
                        if (knownSides + knownAngles < 2) {
                            throw new Error('Please enter at least two values (e.g., two sides, or one side and one acute angle) to solve the triangle.');
                        }
                        if ((!isNaN(alpha) && alpha >= 90) || (!isNaN(beta) && beta >= 90)) {
                            throw new Error('Acute angles ($\alpha$ and $\beta$) must be less than 90 degrees.');
                        }
                        if (!isNaN(alpha) && !isNaN(beta) && formatNumber(alpha + beta) !== '90') {
                            throw new Error('Angles $\alpha$ and $\beta$ must sum to 90 degrees.');
                        }
                        if (!isNaN(c) && (!isNaN(a) && a >= c || !isNaN(b) && b >= c)) {
                             throw new Error('The hypotenuse ($c$) must be strictly longer than the legs ($a$ and $b$).');
                        }

                        // --- Core Solving Logic ---
                        let stepCount = 1;
                        
                        // Case A: Two Sides Known (find 3rd side, then angles)
                        if (knownSides === 2) {
                            if (isNaN(c) && !isNaN(a) && !isNaN(b)) {
                                c = Math.sqrt(a * a + b * b);
                                steps += `<p>${stepCount++}. <strong>Find Hypotenuse $c$</strong> (Pythagorean Theorem): $c = \\sqrt{a^2 + b^2} = \\sqrt{${formatNumber(a)}^2 + ${formatNumber(b)}^2} = ${formatNumber(c)}$</p>`;
                            } else if (isNaN(a) && !isNaN(b) && !isNaN(c)) {
                                a = Math.sqrt(c * c - b * b);
                                steps += `<p>${stepCount++}. <strong>Find Leg $a$</strong> (Pythagorean Theorem): $a = \\sqrt{c^2 - b^2} = \\sqrt{${formatNumber(c)}^2 - ${formatNumber(b)}^2} = ${formatNumber(a)}$</p>`;
                            } else if (isNaN(b) && !isNaN(a) && !isNaN(c)) {
                                b = Math.sqrt(c * c - a * a);
                                steps += `<p>${stepCount++}. <strong>Find Leg $b$</strong> (Pythagorean Theorem): $b = \\sqrt{c^2 - a^2} = \\sqrt{${formatNumber(c)}^2 - ${formatNumber(a)}^2} = ${formatNumber(b)}$</p>`;
                            }
                            
                            // Check for invalid side calculation (e.g., square root of negative number)
                            if (isNaN(a) || isNaN(b) || isNaN(c) || c * c < a * a + b * b - 1e-6) {
                                throw new Error('Invalid side lengths provided. The hypotenuse must be correctly related to the legs (a² + b² = c²).');
                            }
                            
                            // Find angles using known sides (SOHCAHTOA)
                            if (isNaN(alpha)) {
                                alpha = Math.asin(a / c) * R_TO_D;
                                steps += `<p>${stepCount++}. <strong>Find Angle $\\alpha$</strong> (Sine Ratio): $\\alpha = \sin^{-1}(\\frac{a}{c}) = \sin^{-1}(\\frac{${formatNumber(a)}}{${formatNumber(c)}}) \\approx ${formatNumber(alpha)}^\\circ$</p>`;
                            }
                            if (isNaN(beta)) {
                                beta = 90 - alpha;
                                steps += `<p>${stepCount++}. <strong>Find Angle $\\beta$</strong> (Angle Sum Rule): $\\beta = 90^\\circ - \\alpha = 90^\\circ - ${formatNumber(alpha)}^\\circ \\approx ${formatNumber(beta)}^\\circ$</p>`;
                            }

                        } 
                        // Case B: One Side and One Angle Known (find 2nd angle, then sides)
                        else if (knownAngles === 1) {
                            let angleKnown = !isNaN(alpha) ? 'alpha' : 'beta';
                            let angleValue = !isNaN(alpha) ? alpha : beta;
                            
                            // Find the second acute angle first
                            if (angleKnown === 'alpha') {
                                beta = 90 - alpha;
                                steps += `<p>${stepCount++}. <strong>Find Angle $\\beta$</strong> (Angle Sum Rule): $\\beta = 90^\\circ - ${formatNumber(alpha)}^\\circ = ${formatNumber(beta)}^\\circ$</p>`;
                            } else {
                                alpha = 90 - beta;
                                steps += `<p>${stepCount++}. <strong>Find Angle $\\alpha$</strong> (Angle Sum Rule): $\\alpha = 90^\\circ - ${formatNumber(beta)}^\\circ = ${formatNumber(alpha)}^\\circ$</p>`;
                            }
                            
                            // Use SOHCAHTOA to find the missing sides
                            const alphaRad = alpha * D_TO_R;

                            if (!isNaN(a)) { // Side a is known (Opposite to alpha)
                                c = a / Math.sin(alphaRad);
                                b = a / Math.tan(alphaRad);
                                steps += `<p>${stepCount++}. <strong>Find Hypotenuse $c$</strong> (Sine Ratio): $c = \\frac{a}{\\sin(\\alpha)} = \\frac{${formatNumber(a)}}{\\sin(${formatNumber(alpha)}^\\circ)} \\approx ${formatNumber(c)}$</p>`;
                                steps += `<p>${stepCount++}. <strong>Find Leg $b$</strong> (Tangent Ratio): $b = \\frac{a}{\\tan(\\alpha)} = \\frac{${formatNumber(a)}}{\\tan(${formatNumber(alpha)}^\\circ)} \\approx ${formatNumber(b)}$</p>`;
                            } else if (!isNaN(b)) { // Side b is known (Adjacent to alpha)
                                c = b / Math.cos(alphaRad);
                                a = b * Math.tan(alphaRad);
                                steps += `<p>${stepCount++}. <strong>Find Hypotenuse $c$</strong> (Cosine Ratio): $c = \\frac{b}{\\cos(\\alpha)} = \\frac{${formatNumber(b)}}{\\cos(${formatNumber(alpha)}^\\circ)} \\approx ${formatNumber(c)}$</p>`;
                                steps += `<p>${stepCount++}. <strong>Find Leg $a$</strong> (Tangent Ratio): $a = b \\tan(\\alpha) = ${formatNumber(b)} \\tan(${formatNumber(alpha)}^\\circ) \\approx ${formatNumber(a)}$</p>`;
                            } else if (!isNaN(c)) { // Side c is known (Hypotenuse)
                                a = c * Math.sin(alphaRad);
                                b = c * Math.cos(alphaRad);
                                steps += `<p>${stepCount++}. <strong>Find Leg $a$</strong> (Sine Ratio): $a = c \\sin(\\alpha) = ${formatNumber(c)} \\sin(${formatNumber(alpha)}^\\circ) \\approx ${formatNumber(a)}$</p>`;
                                steps += `<p>${stepCount++}. <strong>Find Leg $b$</strong> (Cosine Ratio): $b = c \\cos(\\alpha) = ${formatNumber(c)} \\cos(${formatNumber(alpha)}^\\circ) \\approx ${formatNumber(b)}$</p>`;
                            } else {
                                throw new Error('You must provide at least one side length in addition to an angle.');
                            }

                        } else {
                             throw new Error('Unknown error in input combination. Ensure at least two non-angle values are provided.');
                        }
                        
                        // 2. Final Calculations (Area and Perimeter)
                        const area = 0.5 * a * b;
                        const perimeter = a + b + c;

                        // 3. Final Output
                        resultSides.innerHTML = `a = ${formatNumber(a)}<br>b = ${formatNumber(b)}<br>c = ${formatNumber(c)}`;
                        resultAngles.innerHTML = `$\\alpha = ${formatNumber(alpha)}^\\circ$<br>$\\beta = ${formatNumber(beta)}^\\circ$<br>$\\gamma = 90^\\circ$`;
                        resultArea.textContent = formatNumber(area);
                        resultPerimeter.textContent = formatNumber(perimeter);

                        steps += `<p class="mt-4">${stepCount++}. <strong>Calculate Area:</strong> $A = \\frac{1}{2}ab = \\frac{1}{2}(${formatNumber(a)})(${formatNumber(b)}) \\approx ${formatNumber(area)}$</p>`;
                        steps += `<p>${stepCount++}. <strong>Calculate Perimeter:</strong> $P = a + b + c = ${formatNumber(a)} + ${formatNumber(b)} + ${formatNumber(c)} \\approx ${formatNumber(perimeter)}$</p>`;
                        
                        stepByStep.innerHTML = steps;
                        errorMessage.textContent = '';
                        resultsContainer.classList.remove('hidden');
                        
                        // Re-render MathJax
                        if (window.MathJax) {
                            window.MathJax.typesetPromise([resultAngles, stepByStep]);
                        }

                    } catch (e) {
                        showError(e.message);
                    }
                });

                // Initial calculation (for example values)
                calculateBtn.click(); 
              });
            </script>

