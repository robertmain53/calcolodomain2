    <script>
      // Utility: format currency
      function formatCurrency(value) {
        if (isNaN(value)) return "-";
        const absVal = Math.abs(value);
        const options = {
          minimumFractionDigits: 0,
          maximumFractionDigits: absVal < 1 ? 2 : 0,
        };
        const formatted = absVal.toLocaleString(undefined, options);
        return (value < 0 ? "-" : "") + formatted;
      }

      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }

      function calculateProForma() {
        const baseRevenue = getNumber("baseRevenue");
        const cogsPctGlobal = getNumber("cogsPct") / 100;
        const opexPctGlobal = getNumber("opexPct") / 100;
        const growth = [
          getNumber("growth1"),
          getNumber("growth2"),
          getNumber("growth3"),
        ].map((g) => g / 100);
        const interestGlobal = getNumber("interest");
        const taxRate = getNumber("taxRate") / 100;

        // Overrides
        const overrides = {
          cogs: [
            getNumber("cogs1"),
            getNumber("cogs2"),
            getNumber("cogs3"),
          ].map((v) => (isNaN(v) || v === 0 ? null : v / 100)),
          opex: [
            getNumber("opex1"),
            getNumber("opex2"),
            getNumber("opex3"),
          ].map((v) => (isNaN(v) || v === 0 ? null : v / 100)),
          interest: [
            getNumber("int1"),
            getNumber("int2"),
            getNumber("int3"),
          ].map((v) => (isNaN(v) || v === 0 ? null : v)),
        };

        const revenues = [];
        let prevRev = baseRevenue;
        for (let t = 0; t < 3; t++) {
          const rev = prevRev * (1 + (growth[t] || 0));
          revenues.push(rev);
          prevRev = rev;
        }

        const rows = {
          revenue: [],
          cogs: [],
          grossProfit: [],
          opex: [],
          ebitda: [],
          interest: [],
          preTax: [],
          tax: [],
          netIncome: [],
        };

        for (let t = 0; t < 3; t++) {
          const rev = revenues[t];
          const cogsPct =
            overrides.cogs[t] != null ? overrides.cogs[t] : cogsPctGlobal;
          const opexPct =
            overrides.opex[t] != null ? overrides.opex[t] : opexPctGlobal;
          const interest =
            overrides.interest[t] != null
              ? overrides.interest[t]
              : interestGlobal;

          const cogs = rev * cogsPct;
          const gross = rev - cogs;
          const opex = rev * opexPct;
          const ebitda = gross - opex;
          const preTax = ebitda - interest;
          const tax = preTax > 0 ? preTax * taxRate : 0;
          const net = preTax - tax;

          rows.revenue.push(rev);
          rows.cogs.push(-cogs);
          rows.grossProfit.push(gross);
          rows.opex.push(-opex);
          rows.ebitda.push(ebitda);
          rows.interest.push(-interest);
          rows.preTax.push(preTax);
          rows.tax.push(-tax);
          rows.netIncome.push(net);
        }

        const body = document.getElementById("resultsBody");
        body.innerHTML = "";

        function addRow(label, key, bold = false) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b ${
          bold ? "font-semibold" : ""
        }">${label}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          rows[key][0]
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          rows[key][1]
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          rows[key][2]
        )}</td>
      `;
          body.appendChild(tr);
        }

        addRow("Revenue", "revenue", true);
        addRow("Cost of Goods Sold (COGS)", "cogs");
        addRow("Gross Profit", "grossProfit", true);
        addRow("Operating Expenses", "opex");
        addRow("EBITDA / Operating Income", "ebitda", true);
        addRow("Interest Expense", "interest");
        addRow("Pre-Tax Income", "preTax", true);
        addRow("Income Tax Expense", "tax");
        addRow("Net Income", "netIncome", true);

        document.getElementById("resultsSection").classList.remove("hidden");
      }

      function resetForm() {
        document.getElementById("baseRevenue").value = 500000;
        document.getElementById("cogsPct").value = 40;
        document.getElementById("opexPct").value = 30;
        document.getElementById("growth1").value = 20;
        document.getElementById("growth2").value = 15;
        document.getElementById("growth3").value = 10;
        document.getElementById("interest").value = 10000;
        document.getElementById("taxRate").value = 25;

        [
          "cogs1",
          "cogs2",
          "cogs3",
          "opex1",
          "opex2",
          "opex3",
          "int1",
          "int2",
          "int3",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });

        document.getElementById("resultsSection").classList.add("hidden");
      }

      function downloadCSV() {
        const table = document.getElementById("resultsTable");
        if (
          !table ||
          document.getElementById("resultsSection").classList.contains("hidden")
        )
          return;

        let csv = "";
        for (const row of table.rows) {
          const cells = Array.from(row.cells).map((cell) => {
            const text = cell.innerText.replace(/,/g, "");
            return `"${text.trim()}"`;
          });
          csv += cells.join(",") + "\n";
        }

        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "pro-forma-income-statement.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      function setMode(mode) {
        const simpleBtn = document.getElementById("mode-simple");
        const detailedBtn = document.getElementById("mode-detailed");
        const detailedSection = document.getElementById("detailed-section");

        if (mode === "simple") {
          simpleBtn.classList.add("bg-blue-600", "text-white");
          simpleBtn.classList.remove("bg-white", "text-gray-700");
          detailedBtn.classList.remove("bg-blue-600", "text-white");
          detailedBtn.classList.add("bg-white", "text-gray-700");
          detailedSection.classList.add("hidden");
        } else {
          detailedBtn.classList.add("bg-blue-600", "text-white");
          detailedBtn.classList.remove("bg-white", "text-gray-700");
          simpleBtn.classList.remove("bg-blue-600", "text-white");
          simpleBtn.classList.add("bg-white", "text-gray-700");
          detailedSection.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateProForma);
        document
          .getElementById("resetBtn")
          .addEventListener("click", resetForm);
        document
          .getElementById("downloadCsvBtn")
          .addEventListener("click", downloadCSV);

        document
          .getElementById("mode-simple")
          .addEventListener("click", () => setMode("simple"));
        document
          .getElementById("mode-detailed")
          .addEventListener("click", () => setMode("detailed"));

        // Default mode
        setMode("simple");
      });

