    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        const v = Math.round(value);
        return v.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function calculateRESP() {
        const childAge =
          parseFloat(document.getElementById("childAge").value) || 0;
        const startAge =
          parseFloat(document.getElementById("startAge").value) || 0;
        const contributionType =
          document.getElementById("contributionType").value;
        const contributionAmount =
          parseFloat(document.getElementById("contributionAmount").value) || 0;
        const initialBalance =
          parseFloat(document.getElementById("initialBalance").value) || 0;
        const returnRate =
          parseFloat(document.getElementById("returnRate").value) || 0;
        const feeRate =
          parseFloat(document.getElementById("feeRate").value) || 0;
        const familyIncomeBand =
          document.getElementById("familyIncomeBand").value;
        const province = document.getElementById("province").value;
        const yearsOfStudy = Math.max(
          1,
          parseInt(document.getElementById("yearsOfStudy").value, 10) || 4
        );

        const errorMsg = document.getElementById("errorMsg");
        errorMsg.textContent = "";

        if (startAge <= childAge) {
          errorMsg.textContent =
            "School start age must be greater than current age.";
          return;
        }
        if (childAge < 0 || startAge > 30) {
          errorMsg.textContent = "Please enter realistic ages.";
          return;
        }

        const yearsToContribute = Math.max(
          0,
          Math.min(startAge, 17) - childAge
        );
        const yearsToGrow = startAge - childAge;
        const annualContribution =
          contributionType === "monthly"
            ? contributionAmount * 12
            : contributionAmount;
        const netReturn = Math.max(0, (returnRate - feeRate) / 100);

        let balance = initialBalance;
        let totalContrib = 0;
        let totalCESG = 0;
        let totalCLB = 0;
        let totalProv = 0;
        let totalGrants = 0;

        let cesgLifetimeCap = 7200;
        let clbLifetimeCap = 2000;
        let qesiLifetimeCap = 3600;
        let qesiAccum = 0;
        let bcGrantAdded = false;

        for (let year = 0; year < yearsToGrow; year++) {
          const ageThisYear = childAge + year;
          let contribThisYear = 0;
          let cesgThisYear = 0;
          let clbThisYear = 0;
          let provThisYear = 0;

          if (year < yearsToContribute) {
            contribThisYear = annualContribution;
            totalContrib += contribThisYear;

            if (ageThisYear <= 17) {
              const basicCESG = 0.2 * Math.min(contribThisYear, 2500);
              let extraCESG = 0;
              if (familyIncomeBand === "low") {
                extraCESG = 0.2 * Math.min(contribThisYear, 500);
              } else if (familyIncomeBand === "mid") {
                extraCESG = 0.1 * Math.min(contribThisYear, 500);
              }
              cesgThisYear = basicCESG + extraCESG;
              const cesgRoom = cesgLifetimeCap - totalCESG;
              if (cesgRoom <= 0) {
                cesgThisYear = 0;
              } else if (cesgThisYear > cesgRoom) {
                cesgThisYear = cesgRoom;
              }
              totalCESG += cesgThisYear;

              if (familyIncomeBand === "low") {
                if (totalCLB === 0) {
                  clbThisYear = 500;
                } else {
                  clbThisYear = 100;
                }
                const clbRoom = clbLifetimeCap - totalCLB;
                if (clbRoom <= 0) {
                  clbThisYear = 0;
                } else if (clbThisYear > clbRoom) {
                  clbThisYear = clbRoom;
                }
                totalCLB += clbThisYear;
              }
            }

            if (province === "qc") {
              let qesiThisYear = 0.1 * Math.min(contribThisYear, 2500);
              const qesiRoom = qesiLifetimeCap - qesiAccum;
              if (qesiRoom <= 0) {
                qesiThisYear = 0;
              } else if (qesiThisYear > qesiRoom) {
                qesiThisYear = qesiRoom;
              }
              provThisYear += qesiThisYear;
              qesiAccum += qesiThisYear;
            } else if (province === "bc") {
              const bcGrantAge = 6;
              if (!bcGrantAdded && ageThisYear === bcGrantAge) {
                provThisYear += 1200;
                bcGrantAdded = true;
              }
            }
          }

          const grantsThisYear = cesgThisYear + clbThisYear + provThisYear;
          totalProv += provThisYear;
          totalGrants += grantsThisYear;

          balance =
            (balance + contribThisYear + grantsThisYear) * (1 + netReturn);
        }

        const totalAtStart = balance;
        const totalGrowth = Math.max(
          0,
          totalAtStart - initialBalance - totalContrib - totalGrants
        );

        document.getElementById("totalAtStart").textContent =
          formatCurrency(totalAtStart);
        document.getElementById("yearsToContributeLabel").textContent =
          "Years of contributions: " + yearsToContribute;
        document.getElementById("totalContributions").textContent =
          formatCurrency(totalContrib);
        document.getElementById("totalCESG").textContent =
          formatCurrency(totalCESG);
        document.getElementById("totalCLB").textContent =
          formatCurrency(totalCLB);
        document.getElementById("totalProvincial").textContent =
          formatCurrency(totalProv);
        document.getElementById("totalGrowth").textContent =
          formatCurrency(totalGrowth);

        const withdrawalBody = document.getElementById("withdrawalTableBody");
        withdrawalBody.innerHTML = "";

        if (totalAtStart <= 0) {
          const row = document.createElement("tr");
          row.innerHTML =
            '<td class="px-3 py-2 text-gray-500" colspan="4">Projected balance is zero. Increase contributions or time horizon.</td>';
          withdrawalBody.appendChild(row);
          return;
        }

        const annualWithdrawal = totalAtStart / yearsOfStudy;
        const contribPortion = Math.max(0, totalContrib + initialBalance);
        const grantsGrowthPortion = Math.max(0, totalAtStart - contribPortion);
        const contribShare = contribPortion / totalAtStart;
        const grantsShare = grantsGrowthPortion / totalAtStart;

        for (let i = 1; i <= yearsOfStudy; i++) {
          const totalW = annualWithdrawal;
          const fromContrib = totalW * contribShare;
          const fromGrants = totalW * grantsShare;

          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b">Year ${i}</td>
        <td class="px-3 py-2 border-b text-right">${formatCurrency(totalW)}</td>
        <td class="px-3 py-2 border-b text-right">${formatCurrency(
          fromContrib
        )}</td>
        <td class="px-3 py-2 border-b text-right">${formatCurrency(
          fromGrants
        )}</td>
      `;
          withdrawalBody.appendChild(tr);
        }
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateRESP);
      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("childAge").value = 2;
          document.getElementById("startAge").value = 18;
          document.getElementById("contributionType").value = "monthly";
          document.getElementById("contributionAmount").value = 200;
          document.getElementById("initialBalance").value = 0;
          document.getElementById("returnRate").value = 5;
          document.getElementById("feeRate").value = 1.5;
          document.getElementById("familyIncomeBand").value = "mid";
          document.getElementById("province").value = "none";
          document.getElementById("yearsOfStudy").value = 4;
          document.getElementById("errorMsg").textContent = "";
          document.getElementById("totalAtStart").textContent = "$0";
          document.getElementById("yearsToContributeLabel").textContent =
            "Years of contributions: –";
          document.getElementById("totalContributions").textContent = "$0";
          document.getElementById("totalCESG").textContent = "$0";
          document.getElementById("totalCLB").textContent = "$0";
          document.getElementById("totalProvincial").textContent = "$0";
          document.getElementById("totalGrowth").textContent = "$0";
          document.getElementById("withdrawalTableBody").innerHTML =
            '<tr><td class="px-3 py-2 text-gray-500" colspan="4">Run the calculator to see a withdrawal schedule.</td></tr>';
        });

      window.addEventListener("load", calculateRESP);
    </script>

