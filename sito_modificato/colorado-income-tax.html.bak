    <script>
      // Colorado income tax calculator logic
      (function () {
        const grossIncomeEl = document.getElementById("gross-income");
        const pretaxEl = document.getElementById("pretax-deductions");
        const filingStatusEl = document.getElementById("filing-status");
        const deductionTypeEl = document.getElementById("deduction-type");
        const deductionAmountEl = document.getElementById("deduction-amount");
        const taxRateEl = document.getElementById("co-tax-rate");
        const creditsEl = document.getElementById("co-credits");
        const taxYearEl = document.getElementById("tax-year");

        const summaryTaxableEl = document.getElementById("summary-taxable");
        const summaryTaxEl = document.getElementById("summary-tax");
        const summaryEffectiveRateEl = document.getElementById(
          "summary-effective-rate"
        );
        const summaryAfterTaxEl = document.getElementById("summary-after-tax");
        const errorEl = document.getElementById("calc-error");

        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        // Approximate standard deduction by filing status (for planning only)
        function getSuggestedStandardDeduction(status) {
          switch (status) {
            case "married_joint":
              return 29200; // approx double single
            case "married_separate":
              return 14600;
            case "hoh":
              return 21900;
            case "single":
            default:
              return 14600;
          }
        }

        function formatCurrency(value) {
          return value.toLocaleString("en-US", {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          });
        }

        function formatPercent(value) {
          return (
            value.toLocaleString("en-US", { maximumFractionDigits: 2 }) + "%"
          );
        }

        function updateSuggestedDeduction() {
          if (deductionTypeEl.value === "standard") {
            const suggested = getSuggestedStandardDeduction(
              filingStatusEl.value
            );
            deductionAmountEl.value = suggested;
          }
        }

        filingStatusEl.addEventListener("change", () => {
          if (deductionTypeEl.value === "standard") {
            updateSuggestedDeduction();
          }
        });

        deductionTypeEl.addEventListener("change", () => {
          if (deductionTypeEl.value === "standard") {
            updateSuggestedDeduction();
            deductionAmountEl.disabled = false;
          } else if (deductionTypeEl.value === "itemized") {
            deductionAmountEl.disabled = false;
          } else {
            deductionAmountEl.disabled = true;
            deductionAmountEl.value = 0;
          }
        });

        function calculate() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          let gross = parseFloat(grossIncomeEl.value) || 0;
          let pretax = parseFloat(pretaxEl.value) || 0;
          let deduction = parseFloat(deductionAmountEl.value) || 0;
          let rate = parseFloat(taxRateEl.value) || 0;
          let credits = parseFloat(creditsEl.value) || 0;

          if (
            gross < 0 ||
            pretax < 0 ||
            deduction < 0 ||
            rate < 0 ||
            credits < 0
          ) {
            errorEl.textContent = "Inputs cannot be negative.";
            errorEl.classList.remove("hidden");
            return;
          }

          if (pretax > gross) pretax = gross;

          const adjustedIncome = Math.max(gross - pretax, 0);

          if (deductionTypeEl.value === "none") {
            deduction = 0;
          }

          const taxableIncome = Math.max(adjustedIncome - deduction, 0);
          const rateDecimal = rate / 100;

          let preliminaryTax = taxableIncome * rateDecimal;
          let finalTax = Math.max(preliminaryTax - credits, 0);

          const effectiveRate = gross > 0 ? (finalTax / gross) * 100 : 0;
          const afterTaxIncome = gross - finalTax;

          summaryTaxableEl.textContent = formatCurrency(taxableIncome);
          summaryTaxEl.textContent = formatCurrency(finalTax);
          summaryEffectiveRateEl.textContent = formatPercent(effectiveRate);
          summaryAfterTaxEl.textContent = formatCurrency(afterTaxIncome);
        }

        function reset() {
          filingStatusEl.value = "single";
          taxYearEl.value = "2024";
          grossIncomeEl.value = 75000;
          pretaxEl.value = 0;
          deductionTypeEl.value = "standard";
          updateSuggestedDeduction();
          taxRateEl.value = 4.4;
          creditsEl.value = 0;
          deductionAmountEl.disabled = false;
          calculate();
        }

        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", reset);

        // Initialize defaults
        updateSuggestedDeduction();
        calculate();
      })();
    </script>

