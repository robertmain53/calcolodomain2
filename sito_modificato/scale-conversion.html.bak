    <script>
      // Unit conversion helpers (all via meters)
      const unitToMeters = {
        mm: 0.001,
        cm: 0.01,
        m: 1,
        in: 0.0254,
        ft: 0.3048,
      };

      function parseNumberOrFraction(value) {
        if (typeof value !== "string") return NaN;
        value = value.trim();
        if (!value) return NaN;
        // Handle simple fraction like "1/4"
        if (value.includes("/")) {
          const parts = value.split("/");
          if (parts.length === 2) {
            const num = parseFloat(parts[0]);
            const den = parseFloat(parts[1]);
            if (!isNaN(num) && !isNaN(den) && den !== 0) {
              return num / den;
            }
          }
        }
        return parseFloat(value);
      }

      function convertLength(value, fromUnit, toUnit) {
        const meters = value * unitToMeters[fromUnit];
        return meters / unitToMeters[toUnit];
      }

      document.addEventListener("DOMContentLoaded", () => {
        const modeButtons = document.querySelectorAll(".mode-btn");
        const modeHelpText = document.getElementById("mode-help-text");
        const inputLabelExtra = document.getElementById("input-label-extra");
        const scalePreset = document.getElementById("scale-preset");
        const scaleRatioInput = document.getElementById("scale-ratio");
        const enableScaleToScale = document.getElementById(
          "enable-scale-to-scale"
        );
        const scaleToScaleWrapper = document.getElementById(
          "scale-to-scale-wrapper"
        );
        const originalScaleInput = document.getElementById("original-scale");
        const targetScaleInput = document.getElementById("target-scale");
        const inputValueEl = document.getElementById("input-value");
        const inputUnitEl = document.getElementById("input-unit");
        const outputUnitEl = document.getElementById("output-unit");
        const convertBtn = document.getElementById("convert-btn");
        const errorMessage = document.getElementById("error-message");
        const resultsCard = document.getElementById("results-card");
        const resultMain = document.getElementById("result-main");
        const resultUnit = document.getElementById("result-unit");
        const resultDetail = document.getElementById("result-detail");
        const scaleToScaleNote = document.getElementById("scale-to-scale-note");

        let mode = "real-to-model";

        function setMode(newMode) {
          mode = newMode;
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === newMode) {
              btn.classList.remove(
                "border-gray-300",
                "bg-white",
                "text-gray-700"
              );
              btn.classList.add(
                "border-blue-500",
                "bg-blue-50",
                "text-blue-700"
              );
            } else {
              btn.classList.remove(
                "border-blue-500",
                "bg-blue-50",
                "text-blue-700"
              );
              btn.classList.add("border-gray-300", "bg-white", "text-gray-700");
            }
          });
          if (newMode === "real-to-model") {
            modeHelpText.textContent =
              "Enter a real-world dimension and get the scaled model size.";
            inputLabelExtra.textContent = "(real size)";
          } else {
            modeHelpText.textContent =
              "Enter a model dimension and get the real-world size.";
            inputLabelExtra.textContent = "(model size)";
          }
          resultsCard.classList.add("hidden");
          errorMessage.classList.add("hidden");
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => setMode(btn.dataset.mode));
        });

        // Preset scale selection
        scalePreset.addEventListener("change", () => {
          if (scalePreset.value) {
            scaleRatioInput.value = scalePreset.value;
          }
        });

        // Enable/disable scale-to-scale
        enableScaleToScale.addEventListener("change", () => {
          const enabled = enableScaleToScale.checked;
          if (enabled) {
            scaleToScaleWrapper.classList.remove(
              "opacity-40",
              "pointer-events-none"
            );
            // If empty, seed with current main scale
            if (!originalScaleInput.value && scaleRatioInput.value) {
              originalScaleInput.value = scaleRatioInput.value;
            }
          } else {
            scaleToScaleWrapper.classList.add(
              "opacity-40",
              "pointer-events-none"
            );
            scaleToScaleNote.classList.add("hidden");
          }
          resultsCard.classList.add("hidden");
          errorMessage.classList.add("hidden");
        });

        function showError(msg) {
          errorMessage.textContent = msg;
          errorMessage.classList.remove("hidden");
          resultsCard.classList.add("hidden");
        }

        function clearError() {
          errorMessage.classList.add("hidden");
        }

        function formatNumber(value) {
          if (!isFinite(value)) return "–";
          const abs = Math.abs(value);
          if (abs === 0) return "0";
          if (abs >= 1000)
            return value.toLocaleString(undefined, {
              maximumFractionDigits: 2,
            });
          if (abs >= 1)
            return value.toLocaleString(undefined, {
              maximumFractionDigits: 3,
            });
          if (abs >= 0.01)
            return value.toLocaleString(undefined, {
              maximumFractionDigits: 4,
            });
          return value.toExponential(3);
        }

        convertBtn.addEventListener("click", () => {
          clearError();
          const rawInput = inputValueEl.value;
          const inputVal = parseNumberOrFraction(rawInput);
          if (isNaN(inputVal)) {
            showError(
              "Please enter a valid number or fraction for the measurement."
            );
            return;
          }
          if (inputVal < 0) {
            showError("Length cannot be negative.");
            return;
          }

          let n = parseFloat(scaleRatioInput.value);
          if (isNaN(n) || n <= 0) {
            showError("Please enter a valid scale ratio (n in 1:n).");
            return;
          }

          const inputUnit = inputUnitEl.value;
          const outputUnit = outputUnitEl.value;

          let resultValue;
          let detailText = "";
          let usedOriginalScale = null;
          let usedTargetScale = null;

          // If scale-to-scale is enabled, override behavior
          if (enableScaleToScale.checked) {
            const n1 = parseFloat(originalScaleInput.value);
            const n2 = parseFloat(targetScaleInput.value);
            if (isNaN(n1) || n1 <= 0 || isNaN(n2) || n2 <= 0) {
              showError(
                "Please enter valid original and target scales (n in 1:n)."
              );
              return;
            }
            usedOriginalScale = n1;
            usedTargetScale = n2;

            // Step 1: convert input to meters
            const lengthInMeters = convertLength(inputVal, inputUnit, "m");
            // Step 2: interpret that as model or real depending on mode
            let realMeters;
            if (mode === "real-to-model") {
              // Input is real length at original scale? For scale-to-scale, more intuitive:
              // Treat input as length at original scale, convert to real, then to target scale.
              realMeters = lengthInMeters * n1;
            } else {
              // model-to-real: input is model at original scale, convert to real
              realMeters = lengthInMeters * n1;
            }
            // Step 3: convert to target scale model length
            const modelMetersAtTarget = realMeters / n2;
            resultValue = convertLength(modelMetersAtTarget, "m", outputUnit);

            detailText = `Converted from 1:${n1} to 1:${n2}.`;
            scaleToScaleNote.textContent = `Factor used: × ( ${n1} / ${n2} ) ≈ ${formatNumber(
              n1 / n2
            )}.`;
            scaleToScaleNote.classList.remove("hidden");
          } else {
            scaleToScaleNote.classList.add("hidden");
            // Normal real ↔ model conversion
            const lengthInMeters = convertLength(inputVal, inputUnit, "m");
            if (mode === "real-to-model") {
              const modelMeters = lengthInMeters / n;
              resultValue = convertLength(modelMeters, "m", outputUnit);
              detailText = `Real → model at 1:${n}.`;
            } else {
              const realMeters = lengthInMeters * n;
              resultValue = convertLength(realMeters, "m", outputUnit);
              detailText = `Model → real at 1:${n}.`;
            }
          }

          resultMain.textContent = formatNumber(resultValue);
          resultUnit.textContent = outputUnit;
          resultDetail.textContent = detailText;
          resultsCard.classList.remove("hidden");
        });
      });
    </script>

