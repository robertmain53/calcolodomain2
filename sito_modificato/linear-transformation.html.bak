            msg.push("det(A) ≠ 0: the transformation is invertible.");
            if (d > 0) {
              msg.push("det(A) > 0: orientation is preserved.");
            } else {
              msg.push(
                "det(A) < 0: orientation is flipped (includes a reflection)."
              );
            }
          }
          msg.push(
            "trace(A) = " +
              t.toFixed(6) +
              " gives the sum of eigenvalues (in 2D) and hints at average scaling."
          );
          return msg.join(" ");
        }

        // Form handling
        var ltForm = $("lt-form");
        var ltError = $("lt-error");
        var ltResults = $("lt-results");
        var outVec = $("lt-result-vector");
        var outDet = $("lt-result-det");
        var outTrace = $("lt-result-trace");
        var outClass = $("lt-result-class");

        function handleSubmit(e) {
          e.preventDefault();
          hide(ltError);
          hide(ltResults);
          outVec.textContent = "";
          outDet.textContent = "";
          outTrace.textContent = "";
          outClass.textContent = "";

          var dim = dimSelect.value;
          try {
            if (dim === "2") {
              var A = getMatrix2D();
              var v = vec2(num($("v2-x").value, 0), num($("v2-y").value, 0));
              var Av = applyMatrix2D(v, A);
              var d = det2(A);
              var t = trace2(A);

              outVec.innerHTML =
                '<span class="vector-pill">v = (' +
                v.x.toFixed(4) +
                ", " +
                v.y.toFixed(4) +
                ")</span>" +
                '<span class="vector-pill">A·v = (' +
                Av.x.toFixed(4) +
                ", " +
                Av.y.toFixed(4) +
                ")</span>";
              outDet.textContent =
                "det(A) = " + d.toFixed(9) + " (area scaling factor in 2D).";
              outTrace.textContent = "trace(A) = " + t.toFixed(9) + ".";
              outClass.textContent = classify2D(A);
              show(ltResults);
              drawScene2D();
            } else {
              var B = [
                [
                  num($("b11").value, 0),
                  num($("b12").value, 0),
                  num($("b13").value, 0),
                ],
                [
                  num($("b21").value, 0),
                  num($("b22").value, 0),
                  num($("b23").value, 0),
                ],
                [
                  num($("b31").value, 0),
                  num($("b32").value, 0),
                  num($("b33").value, 0),
                ],
              ];
              var vx = num($("v3-x").value, 0);
              var vy = num($("v3-y").value, 0);
              var vz = num($("v3-z").value, 0);
              var Av3 = {
                x: B[0][0] * vx + B[0][1] * vy + B[0][2] * vz,
                y: B[1][0] * vx + B[1][1] * vy + B[1][2] * vz,
                z: B[2][0] * vx + B[2][1] * vy + B[2][2] * vz,
              };
              var d3 = det3(B);
              var t3 = trace3(B);

              outVec.innerHTML =
                '<span class="vector-pill">v = (' +
                vx.toFixed(4) +
                ", " +
                vy.toFixed(4) +
                ", " +
                vz.toFixed(4) +
                ")</span>" +
                '<span class="vector-pill">A·v = (' +
                Av3.x.toFixed(4) +
                ", " +
                Av3.y.toFixed(4) +
                ", " +
                Av3.z.toFixed(4) +
                ")</span>";
              outDet.textContent =
                "det(A) = " + d3.toFixed(9) + " (volume scaling factor in 3D).";
              outTrace.textContent = "trace(A) = " + t3.toFixed(9) + ".";

              var classMsg = [];
              if (Math.abs(d3) < 1e-9) {
                classMsg.push(
                  "det(A) ≈ 0: the transformation squashes ℝ³ into a lower-dimensional subspace (not invertible)."
                );
              } else {
                classMsg.push("det(A) ≠ 0: the transformation is invertible.");
                if (d3 > 0) {
                  classMsg.push("det(A) > 0: orientation is preserved.");
                } else {
                  classMsg.push("det(A) < 0: orientation is flipped.");
                }
              }
              classMsg.push(
                "trace(A) = " +
                  t3.toFixed(6) +
                  " equals the sum of eigenvalues and describes aggregate scaling along principal directions."
              );
              outClass.textContent = classMsg.join(" ");
              show(ltResults);
            }
          } catch (err) {
            ltError.textContent =
              err.message || "An error occurred while computing A·v.";
            show(ltError);
          }
        }

        function handleReset() {
          dimSelect.value = "2";
          $("a11").value = 1;
          $("a12").value = 0;
          $("a21").value = 0;
          $("a22").value = 1;
          $("v2-x").value = 1;
          $("v2-y").value = 0;

          $("b11").value = 1;
          $("b12").value = 0;
          $("b13").value = 0;
          $("b21").value = 0;
          $("b22").value = 1;
          $("b23").value = 0;
          $("b31").value = 0;
          $("b32").value = 0;
          $("b33").value = 1;
          $("v3-x").value = 1;
          $("v3-y").value = 1;
          $("v3-z").value = 0;

          hide(ltError);
          hide(ltResults);
          updateDimVisibility();
        }

        // Wiring
        document.addEventListener("DOMContentLoaded", function () {
          if (dimSelect) {
            dimSelect.addEventListener("change", updateDimVisibility);
          }
          document
            .querySelectorAll(".chip-button[data-lt-preset]")
            .forEach(function (btn) {
              btn.addEventListener("click", function () {
                var name = btn.getAttribute("data-lt-preset");
                applyMatrixPreset(name);
              });
            });
          document
            .querySelectorAll(".chip-button[data-lt-vpreset]")
            .forEach(function (btn) {
              btn.addEventListener("click", function () {
                var name = btn.getAttribute("data-lt-vpreset");
                applyVectorPreset2D(name);
              });
            });

          var ltReset = $("lt-reset");
          if (ltForm) {
            ltForm.addEventListener("submit", handleSubmit);
          }
          if (ltReset) {
            ltReset.addEventListener("click", handleReset);
          }

          updateDimVisibility();
        });
      })();
    </script>
  
