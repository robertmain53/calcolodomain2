    <script>
      // Utility functions
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0.00";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        return (
          sign + "$" + abs.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",")
        );
      }

      function toNumber(val) {
        const n = parseFloat(val);
        return isNaN(n) ? 0 : n;
      }

      // Asset row management
      const assetsTbody = document.getElementById("assets-tbody");
      const targetTotalSpan = document.getElementById("target-total-span");
      const validationMessage = document.getElementById("validation-message");

      function createAssetRow(
        name = "",
        value = "",
        target = "",
        units = "",
        costBasis = ""
      ) {
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";

        tr.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="asset-name w-full border border-gray-300 rounded-md px-2 py-1 text-sm focus:ring-1 focus:ring-blue-500 focus:outline-none" placeholder="e.g. US Stocks ETF" value="${name}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" step="0.01" min="0" class="asset-value w-28 border border-gray-300 rounded-md px-2 py-1 text-sm text-right focus:ring-1 focus:ring-blue-500 focus:outline-none" value="${value}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" step="0.01" class="asset-target w-20 border border-gray-300 rounded-md px-2 py-1 text-sm text-right focus:ring-1 focus:ring-blue-500 focus:outline-none" value="${target}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" step="0.0001" min="0" class="asset-units w-24 border border-gray-300 rounded-md px-2 py-1 text-sm text-right focus:ring-1 focus:ring-blue-500 focus:outline-none" value="${units}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" step="0.0001" min="0" class="asset-cost-basis w-28 border border-gray-300 rounded-md px-2 py-1 text-sm text-right focus:ring-1 focus:ring-blue-500 focus:outline-none" value="${costBasis}">
      </td>
      <td class="px-3 py-2 text-right">
        <button type="button" class="remove-asset text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;

        assetsTbody.appendChild(tr);
      }

      function updateTargetTotal() {
        let total = 0;
        document.querySelectorAll(".asset-target").forEach((input) => {
          total += toNumber(input.value);
        });
        targetTotalSpan.textContent = total.toFixed(2) + "%";
      }

      document.getElementById("add-asset-btn").addEventListener("click", () => {
        createAssetRow();
      });

      assetsTbody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-asset")) {
          e.target.closest("tr").remove();
          updateTargetTotal();
        }
      });

      assetsTbody.addEventListener("input", (e) => {
        if (e.target.classList.contains("asset-target")) {
          updateTargetTotal();
        }
      });

      document
        .getElementById("load-sample-btn")
        .addEventListener("click", () => {
          assetsTbody.innerHTML = "";
          const sample = [
            {
              name: "US Stocks ETF",
              value: 60000,
              target: 50,
              units: 600,
              costBasis: 80,
            },
            {
              name: "International Stocks ETF",
              value: 20000,
              target: 20,
              units: 200,
              costBasis: 85,
            },
            {
              name: "Bond Fund",
              value: 30000,
              target: 25,
              units: 300,
              costBasis: 95,
            },
            { name: "Cash", value: 5000, target: 5, units: "", costBasis: "" },
          ];
          sample.forEach((a) =>
            createAssetRow(a.name, a.value, a.target, a.units, a.costBasis)
          );
          updateTargetTotal();
        });

      // Initialize with a couple of empty rows
      createAssetRow("US Stocks ETF", "", "60", "", "");
      createAssetRow("Bond Fund", "", "40", "", "");
      updateTargetTotal();

      // Calculation logic
      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const totalCashInput = document.getElementById("total-cash-input");
      const toleranceInput = document.getElementById("tolerance-input");
      const tradeModeSelect = document.getElementById("trade-mode");
      const taxRateInput = document.getElementById("tax-rate-input");

      const summaryPanel = document.getElementById("summary-panel");
      const summaryTotalValue = document.getElementById("summary-total-value");
      const summaryTotalTrades = document.getElementById(
        "summary-total-trades"
      );
      const summaryTax = document.getElementById("summary-tax");

      const resultsContainer = document.getElementById("results-container");
      const tradesEmpty = document.getElementById("trades-empty");
      const tradesTableWrapper = document.getElementById(
        "trades-table-wrapper"
      );
      const tradesTbody = document.getElementById("trades-tbody");
      const allocationTbody = document.getElementById("allocation-tbody");

      function getAssetsFromUI() {
        const rows = Array.from(assetsTbody.querySelectorAll("tr"));
        return rows
          .map((row) => {
            return {
              name: row.querySelector(".asset-name").value.trim() || "Asset",
              value: toNumber(row.querySelector(".asset-value").value),
              targetPct: toNumber(row.querySelector(".asset-target").value),
              units: toNumber(row.querySelector(".asset-units").value),
              costBasisPerUnit: toNumber(
                row.querySelector(".asset-cost-basis").value
              ),
            };
          })
          .filter((a) => a.value > 0 || a.targetPct > 0);
      }

      function validateInputs(assets) {
        validationMessage.classList.add("hidden");
        validationMessage.textContent = "";

        if (assets.length === 0) {
          validationMessage.textContent =
            "Please enter at least one asset with a value or target percentage.";
          validationMessage.classList.remove("hidden");
          return false;
        }

        const totalTarget = assets.reduce((sum, a) => sum + a.targetPct, 0);
        if (Math.abs(totalTarget - 100) > 0.01) {
          validationMessage.textContent =
            "Target allocation must sum to 100%. It currently sums to " +
            totalTarget.toFixed(2) +
            "%.";
          validationMessage.classList.remove("hidden");
          return false;
        }

        const totalValue = assets.reduce((sum, a) => sum + a.value, 0);
        if (totalValue <= 0) {
          validationMessage.textContent =
            "Please enter current values for your assets (total value must be greater than 0).";
          validationMessage.classList.remove("hidden");
          return false;
        }

        return true;
      }

      calculateBtn.addEventListener("click", () => {
        const assets = getAssetsFromUI();
        if (!validateInputs(assets)) {
          summaryPanel.classList.add("hidden");
          resultsContainer.classList.add("hidden");
          return;
        }

        const cash = Math.max(0, toNumber(totalCashInput.value));
        const tolerance = Math.max(0, toNumber(toleranceInput.value)) / 100;
        const tradeMode = tradeModeSelect.value;
        const taxRate =
          Math.max(0, Math.min(100, toNumber(taxRateInput.value))) / 100;

        const totalCurrentValue = assets.reduce((sum, a) => sum + a.value, 0);
        const totalPortfolioValue = totalCurrentValue + cash;

        // Compute current weights and target dollar values
        assets.forEach((a) => {
          a.currentWeight = a.value / totalCurrentValue;
          a.targetWeight = a.targetPct / 100;
          a.targetValue = totalPortfolioValue * a.targetWeight;
          a.rawDelta = a.targetValue - a.value; // positive = buy, negative = sell
          a.drift = a.currentWeight - a.targetWeight;
        });

        // Apply tolerance band: if abs(drift) <= tolerance, no trade
        assets.forEach((a) => {
          if (tolerance > 0 && Math.abs(a.drift) <= tolerance) {
            a.delta = 0;
          } else {
            a.delta = a.rawDelta;
          }
        });

        // Apply trade mode constraints
        if (tradeMode === "buy-only") {
          assets.forEach((a) => {
            if (a.delta < 0) a.delta = 0;
          });
        } else if (tradeMode === "sell-only") {
          assets.forEach((a) => {
            if (a.delta > 0) a.delta = 0;
          });
        }

        // Build trades and estimate tax
        tradesTbody.innerHTML = "";
        allocationTbody.innerHTML = "";

        let totalTradeAbs = 0;
        let totalTax = 0;

        assets.forEach((a) => {
          const tradeAmount = a.delta;
          const action =
            tradeAmount > 0 ? "Buy" : tradeAmount < 0 ? "Sell" : "Hold";
          const absTrade = Math.abs(tradeAmount);

          // Estimate units traded and gains for sells
          let unitsTraded = 0;
          let estGain = 0;
          let estTax = 0;

          if (absTrade > 0 && a.units > 0) {
            const pricePerUnit = a.value / a.units;
            unitsTraded = absTrade / pricePerUnit;

            if (tradeAmount < 0 && a.costBasisPerUnit > 0) {
              const gainPerUnit = pricePerUnit - a.costBasisPerUnit;
              estGain = gainPerUnit * unitsTraded;
              if (estGain > 0 && taxRate > 0) {
                estTax = estGain * taxRate;
              }
            }
          }

          totalTradeAbs += absTrade;
          totalTax += estTax;

          // Allocation after trades (approximate)
          const newValue = a.value + tradeAmount;
          const newTotalValue = totalPortfolioValue; // cash is included in target; for simplicity assume all cash used as planned
          const afterWeight = newValue / newTotalValue;

          // Populate allocation table
          const allocRow = document.createElement("tr");
          allocRow.className = "border-t border-gray-100";
          allocRow.innerHTML = `
        <td class="px-3 py-2">${a.name}</td>
        <td class="px-3 py-2 text-right">${(a.currentWeight * 100).toFixed(
          2
        )}%</td>
        <td class="px-3 py-2 text-right">${a.targetPct.toFixed(2)}%</td>
        <td class="px-3 py-2 text-right">${(afterWeight * 100).toFixed(2)}%</td>
        <td class="px-3 py-2 text-right">
          ${(a.drift * 100).toFixed(2)}%
        </td>
      `;
          allocationTbody.appendChild(allocRow);

          // Populate trades table if there is a trade
          if (absTrade > 1e-6) {
            const tr = document.createElement("tr");
            tr.className = "border-t border-gray-100";
            tr.innerHTML = `
          <td class="px-3 py-2">${a.name}</td>
          <td class="px-3 py-2 text-right">
            <span class="badge ${
              action === "Buy"
                ? "bg-green-100 text-green-800"
                : "bg-red-100 text-red-800"
            }">${action}</span>
          </td>
          <td class="px-3 py-2 text-right">${formatCurrency(tradeAmount)}</td>
          <td class="px-3 py-2 text-right">${
            unitsTraded ? unitsTraded.toFixed(4) : "—"
          }</td>
          <td class="px-3 py-2 text-right">${
            estGain ? formatCurrency(estGain) : "—"
          }</td>
          <td class="px-3 py-2 text-right">${
            estTax ? formatCurrency(estTax) : "—"
          }</td>
        `;
            tradesTbody.appendChild(tr);
          }
        });

        // Update summary
        summaryTotalValue.textContent = formatCurrency(totalPortfolioValue);
        summaryTotalTrades.textContent = formatCurrency(totalTradeAbs);
        summaryTax.textContent = formatCurrency(totalTax);

        summaryPanel.classList.remove("hidden");
        resultsContainer.classList.remove("hidden");

        if (tradesTbody.children.length === 0) {
          tradesEmpty.classList.remove("hidden");
          tradesTableWrapper.classList.add("hidden");
        } else {
          tradesEmpty.classList.add("hidden");
          tradesTableWrapper.classList.remove("hidden");
        }
      });

      resetBtn.addEventListener("click", () => {
        assetsTbody.innerHTML = "";
        createAssetRow("US Stocks ETF", "", "60", "", "");
        createAssetRow("Bond Fund", "", "40", "", "");
        updateTargetTotal();
        totalCashInput.value = "0";
        toleranceInput.value = "0";
        tradeModeSelect.value = "both";
        taxRateInput.value = "15";
        summaryPanel.classList.add("hidden");
        resultsContainer.classList.add("hidden");
        validationMessage.classList.add("hidden");
        validationMessage.textContent = "";
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden");
          menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", expanded ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
