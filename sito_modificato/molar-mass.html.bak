      function parseFormula(formula) {
        if (!formula || typeof formula !== "string") {
          throw new Error("Please enter a chemical formula.");
        }

        // Normalize: remove spaces, replace common hydrate dot with explicit separator
        let f = formula.replace(/\s+/g, "");
        // Split hydrates: CuSO4·5H2O or CuSO4.5H2O
        const hydrateParts = f.split(/[\u00B7·\.]/); // middle dot, bullet, or dot

        const totalCounts = {};

        hydrateParts.forEach((part) => {
          if (!part) return;
          const counts = parseSingleFormula(part);
          for (const el in counts) {
            totalCounts[el] = (totalCounts[el] || 0) + counts[el];
          }
        });

        return totalCounts;
      }

      function parseSingleFormula(formula) {
        let i = 0;
        const len = formula.length;

        function parseGroup(multiplier = 1) {
          const counts = {};
          while (i < len) {
            const ch = formula[i];

            if (ch === "(" || ch === "[") {
              i++;
              const inner = parseGroup(1);
              if (i >= len || !/[)\]]/.test(formula[i])) {
                throw new Error("Unmatched parenthesis or bracket in formula.");
              }
              i++;
              const num = readNumber() || 1;
              for (const el in inner) {
                counts[el] = (counts[el] || 0) + inner[el] * num;
              }
            } else if (ch === ")" || ch === "]") {
              break;
            } else if (/[A-Z]/.test(ch)) {
              const symbol = readElement();
              if (!ATOMIC_WEIGHTS.hasOwnProperty(symbol)) {
                throw new Error(`Unknown element symbol: ${symbol}`);
              }
              const num = readNumber() || 1;
              counts[symbol] = (counts[symbol] || 0) + num;
            } else if (/[0-9]/.test(ch)) {
              throw new Error("Numbers must follow an element or a group.");
            } else {
              throw new Error(`Unexpected character "${ch}" in formula.`);
            }
          }
          if (multiplier !== 1) {
            for (const el in counts) {
              counts[el] *= multiplier;
            }
          }
          return counts;
        }

        function readElement() {
          if (i >= len || !/[A-Z]/.test(formula[i])) return null;
          let symbol = formula[i++];
          if (i < len && /[a-z]/.test(formula[i])) {
            symbol += formula[i++];
          }
          return symbol;
        }

        function readNumber() {
          let start = i;
          while (i < len && /[0-9]/.test(formula[i])) i++;
          if (start === i) return null;
          return parseInt(formula.slice(start, i), 10);
        }

        const result = parseGroup(1);
        if (i < len && /[)\]]/.test(formula[i])) {
          throw new Error("Unmatched closing parenthesis or bracket.");
        }
        return result;
      }

      function calculateMolarMass(counts) {
        let total = 0;
        const details = [];
        for (const el of Object.keys(counts).sort()) {
          const n = counts[el];
          const aw = ATOMIC_WEIGHTS[el];
          const contrib = n * aw;
          total += contrib;
          details.push({
            element: el,
            count: n,
            atomicWeight: aw,
            contribution: contrib,
          });
        }
        return { total, details };
      }

      function formatNumber(value, decimals = 3) {
        return value.toFixed(decimals).replace(/\.?0+$/, "");
      }

      function buildFormulaFromCounts(counts) {
        const parts = [];
        const elements = Object.keys(counts).sort();
        for (const el of elements) {
          const n = counts[el];
          parts.push(el + (n !== 1 ? n : ""));
        }
        return parts.join("");
      }

      function onCalculate() {
        const input = document.getElementById("formula-input");
        const errorBox = document.getElementById("error-box");
        const resultSummary = document.getElementById("result-summary");
        const breakdownSection = document.getElementById("breakdown-section");
        const stepsSection = document.getElementById("steps-section");
        const breakdownBody = document.getElementById("breakdown-body");

        errorBox.classList.add("hidden");
        errorBox.textContent = "";
        resultSummary.classList.add("hidden");
        breakdownSection.classList.add("hidden");
        stepsSection.classList.add("hidden");
        breakdownBody.innerHTML = "";

        const formula = input.value.trim();
        if (!formula) {
          errorBox.textContent = "Please enter a chemical formula.";
          errorBox.classList.remove("hidden");
          return;
        }

        try {
          const counts = parseFormula(formula);
          const { total, details } = calculateMolarMass(counts);

          document.getElementById("molar-mass-value").textContent =
            formatNumber(total, 4);
          document.getElementById("normalized-formula").textContent =
            buildFormulaFromCounts(counts) || "—";

          let tbodyHtml = "";
          details.forEach((d) => {
            const percent = total > 0 ? (d.contribution / total) * 100 : 0;
            tbodyHtml += `
          <tr class="border-t">
            <td class="px-3 py-2">${d.element}</td>
            <td class="px-3 py-2 text-right">${d.count}</td>
            <td class="px-3 py-2 text-right">${formatNumber(
              d.atomicWeight,
              4
            )}</td>
            <td class="px-3 py-2 text-right">${formatNumber(
              d.contribution,
              4
            )}</td>
            <td class="px-3 py-2 text-right">${formatNumber(percent, 2)}</td>
          </tr>
        `;
          });
          breakdownBody.innerHTML = tbodyHtml;

          const stepsLines = details.map(
            (d) =>
              `${d.count} × ${formatNumber(d.atomicWeight, 4)} g/mol (${
                d.element
              }) = ${formatNumber(d.contribution, 4)} g/mol`
          );
          const stepsText =
            `1. Parse the formula into elements and counts.\n` +
            `2. Multiply each element's atomic mass by its count:\n` +
            stepsLines.map((l) => "   • " + l).join("\n") +
            `\n3. Sum all contributions:\n   M = ${stepsLines
              .map((_, idx) => `term${idx + 1}`)
              .join(" + ")} ≈ ${formatNumber(total, 4)} g/mol.`;
          document.getElementById("steps-content").textContent = stepsText;

          resultSummary.classList.remove("hidden");
          breakdownSection.classList.remove("hidden");
          stepsSection.classList.remove("hidden");
        } catch (err) {
          errorBox.textContent =
            err.message ||
            "Could not parse this formula. Please check the syntax.";
          errorBox.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", onCalculate);
        document.getElementById("clear-btn").addEventListener("click", () => {
          document.getElementById("formula-input").value = "";
          document.getElementById("error-box").classList.add("hidden");
          document.getElementById("result-summary").classList.add("hidden");
          document.getElementById("breakdown-section").classList.add("hidden");
          document.getElementById("steps-section").classList.add("hidden");
          document.getElementById("breakdown-body").innerHTML = "";
        });
        document
          .getElementById("formula-input")
          .addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              onCalculate();
            }
          });
        document.querySelectorAll(".chip[data-example]").forEach((chip) => {
          chip.addEventListener("click", () => {
            const example = chip.getAttribute("data-example");
            document.getElementById("formula-input").value = example;
            onCalculate();
          });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
