    <script>
      // Utility: convert feet+inches or meters+cm to base units (ft or m)
      function toBaseLength(main, sub, units) {
        const m = parseFloat(main) || 0;
        const s = parseFloat(sub) || 0;
        if (units === "ft") {
          return m + s / 12; // feet
        } else {
          return m + s / 100; // meters
        }
      }

      function areaToFt2(area, units) {
        if (units === "ft") return area;
        // m² to ft²
        return area * 10.7639104167;
      }

      function areaToM2(area, units) {
        if (units === "m") return area;
        // ft² to m²
        return area / 10.7639104167;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const roomsContainer = document.getElementById("rooms-container");
        const roomTemplate = document.getElementById("room-template");
        const addRoomBtn = document.getElementById("add-room-btn");
        const wasteInput = document.getElementById("waste-percent");
        const unitSystemSelect = document.getElementById("unit-system");

        const useBoxCoverage = document.getElementById("use-box-coverage");
        const boxCoverageSection = document.getElementById(
          "box-coverage-section"
        );
        const coveragePerBoxInput = document.getElementById("coverage-per-box");
        const coverageUnitSelect = document.getElementById("coverage-unit");
        const pricePerBoxInput = document.getElementById("price-per-box");
        const pricePerAreaInput = document.getElementById("price-per-area");
        const pricePerAreaUnitSelect = document.getElementById(
          "price-per-area-unit"
        );

        const netAreaFt2El = document.getElementById("net-area-ft2");
        const netAreaM2El = document.getElementById("net-area-m2");
        const totalAreaFt2El = document.getElementById("total-area-ft2");
        const totalAreaM2El = document.getElementById("total-area-m2");
        const boxesNeededEl = document.getElementById("boxes-needed");
        const totalCostEl = document.getElementById("total-cost");
        const costBreakdownEl = document.getElementById("cost-breakdown");
        const resetBtn = document.getElementById("reset-btn");

        function addRoom(initialName) {
          const clone = roomTemplate.content.cloneNode(true);
          const card = clone.querySelector(".room-card");
          const nameInput = card.querySelector(".room-name");
          if (initialName) nameInput.value = initialName;

          const shapeSelect = card.querySelector(".room-shape");
          const unitsSelect = card.querySelector(".room-units");
          const rectSection = card.querySelector(".shape-rectangle");
          const lshapeSection = card.querySelector(".shape-lshape");
          const removeBtn = card.querySelector(".remove-room");

          const inputs = card.querySelectorAll("input, select");

          function updateShapeVisibility() {
            const shape = shapeSelect.value;
            if (shape === "rectangle") {
              rectSection.classList.remove("hidden");
              lshapeSection.classList.add("hidden");
            } else {
              rectSection.classList.add("hidden");
              lshapeSection.classList.remove("hidden");
            }
            calculateAll();
          }

          shapeSelect.addEventListener("change", updateShapeVisibility);
          unitsSelect.addEventListener("change", calculateAll);
          inputs.forEach((el) => {
            el.addEventListener("input", calculateAll);
          });

          removeBtn.addEventListener("click", () => {
            card.remove();
            calculateAll();
          });

          roomsContainer.appendChild(card);
          updateShapeVisibility();
          calculateAll();
        }

        function getRoomArea(card) {
          const shape = card.querySelector(".room-shape").value;
          const units = card.querySelector(".room-units").value; // 'ft' or 'm'
          let areaBase = 0;

          if (shape === "rectangle") {
            const lm = card.querySelector(".rect-length-main").value;
            const ls = card.querySelector(".rect-length-sub").value;
            const wm = card.querySelector(".rect-width-main").value;
            const ws = card.querySelector(".rect-width-sub").value;
            const L = toBaseLength(lm, ls, units);
            const W = toBaseLength(wm, ws, units);
            areaBase = L * W;
          } else {
            const lom = card.querySelector(".l-outer-length-main").value;
            const los = card.querySelector(".l-outer-length-sub").value;
            const wom = card.querySelector(".l-outer-width-main").value;
            const wos = card.querySelector(".l-outer-width-sub").value;
            const lcm = card.querySelector(".l-cut-length-main").value;
            const lcs = card.querySelector(".l-cut-length-sub").value;
            const wcm = card.querySelector(".l-cut-width-main").value;
            const wcs = card.querySelector(".l-cut-width-sub").value;

            const Lo = toBaseLength(lom, los, units);
            const Wo = toBaseLength(wom, wos, units);
            const Lc = toBaseLength(lcm, lcs, units);
            const Wc = toBaseLength(wcm, wcs, units);

            const outer = Lo * Wo;
            const cutout = Lc * Wc;
            areaBase = Math.max(outer - cutout, 0);
          }

          // Convert to ft² and m²
          const areaFt2 = areaToFt2(areaBase, units);
          const areaM2 = areaToM2(areaBase, units);

          return { areaFt2, areaM2 };
        }

        function calculateAll() {
          const roomCards = roomsContainer.querySelectorAll(".room-card");
          let totalNetFt2 = 0;
          let totalNetM2 = 0;

          roomCards.forEach((card) => {
            const { areaFt2, areaM2 } = getRoomArea(card);
            totalNetFt2 += areaFt2;
            totalNetM2 += areaM2;

            const wastePercent = parseFloat(wasteInput.value) || 0;
            const totalFt2 = areaFt2 * (1 + wastePercent / 100);

            const roomAreaDisplay = card.querySelector(".room-area-display");
            const roomNetAreaEl = card.querySelector(".room-net-area");
            const roomTotalAreaEl = card.querySelector(".room-total-area");

            roomAreaDisplay.textContent = areaFt2.toFixed(2) + " ft²";
            roomNetAreaEl.textContent = areaFt2.toFixed(2) + " ft²";
            roomTotalAreaEl.textContent = totalFt2.toFixed(2) + " ft²";
          });

          const wastePercent = parseFloat(wasteInput.value) || 0;
          const totalFt2 = totalNetFt2 * (1 + wastePercent / 100);
          const totalM2 = totalNetM2 * (1 + wastePercent / 100);

          netAreaFt2El.textContent = totalNetFt2.toFixed(2);
          netAreaM2El.textContent = totalNetM2.toFixed(2);
          totalAreaFt2El.textContent = totalFt2.toFixed(2);
          totalAreaM2El.textContent = totalM2.toFixed(2);

          // Boxes and cost
          let boxes = null;
          let costFromBoxes = null;
          let costFromArea = null;

          if (useBoxCoverage.checked) {
            const coverage = parseFloat(coveragePerBoxInput.value);
            const coverageUnit = coverageUnitSelect.value; // ft2 or m2
            if (coverage && coverage > 0) {
              let totalAreaForCoverage =
                coverageUnit === "ft2" ? totalFt2 : totalM2;
              boxes = Math.ceil(totalAreaForCoverage / coverage);
              if (!isFinite(boxes) || boxes <= 0) boxes = null;
            }
          }

          const pricePerBox = parseFloat(pricePerBoxInput.value);
          if (boxes && pricePerBox && pricePerBox > 0) {
            costFromBoxes = boxes * pricePerBox;
          }

          const pricePerArea = parseFloat(pricePerAreaInput.value);
          const priceAreaUnit = pricePerAreaUnitSelect.value;
          if (pricePerArea && pricePerArea > 0) {
            const areaForPrice = priceAreaUnit === "ft2" ? totalFt2 : totalM2;
            costFromArea = areaForPrice * pricePerArea;
          }

          let totalCost = 0;
          const parts = [];
          if (costFromBoxes != null) {
            totalCost += costFromBoxes;
            parts.push(`$${costFromBoxes.toFixed(2)} from boxes/rolls`);
          }
          if (costFromArea != null) {
            totalCost += costFromArea;
            parts.push(`$${costFromArea.toFixed(2)} from area rate`);
          }

          if (boxes != null) {
            boxesNeededEl.textContent = boxes.toString();
          } else {
            boxesNeededEl.textContent = "–";
          }

          totalCostEl.textContent = totalCost.toFixed(2);
          costBreakdownEl.textContent = parts.length ? parts.join(" + ") : "";
        }

        addRoomBtn.addEventListener("click", () => addRoom(""));

        wasteInput.addEventListener("input", calculateAll);
        unitSystemSelect.addEventListener("change", () => {
          // This setting is informational; calculations are per-room.
          calculateAll();
        });

        useBoxCoverage.addEventListener("change", () => {
          if (useBoxCoverage.checked) {
            boxCoverageSection.classList.remove("hidden");
          } else {
            boxCoverageSection.classList.add("hidden");
          }
          calculateAll();
        });

        [
          coveragePerBoxInput,
          coverageUnitSelect,
          pricePerBoxInput,
          pricePerAreaInput,
          pricePerAreaUnitSelect,
        ].forEach((el) => {
          el.addEventListener("input", calculateAll);
          el.addEventListener("change", calculateAll);
        });

        resetBtn.addEventListener("click", () => {
          roomsContainer.innerHTML = "";
          wasteInput.value = 10;
          unitSystemSelect.value = "imperial";
          useBoxCoverage.checked = false;
          boxCoverageSection.classList.add("hidden");
          coveragePerBoxInput.value = "";
          pricePerBoxInput.value = "";
          pricePerAreaInput.value = "";
          costBreakdownEl.textContent = "";
          boxesNeededEl.textContent = "–";
          totalCostEl.textContent = "0.00";
          netAreaFt2El.textContent = "0.00";
          netAreaM2El.textContent = "0.00";
          totalAreaFt2El.textContent = "0.00";
          totalAreaM2El.textContent = "0.00";
          addRoom("Room 1");
        });

        // Initialize with two example rooms
        addRoom("Room 1");
      });
    </script>

