    <script>
      // --- Tax parameters (approximate, for illustration only) ---
      const TAX_YEAR = 2024;

      // Income tax bands (non-savings, non-dividend) for Welsh taxpayers – same as rest of UK overall
      const incomeTaxBands = [
        { name: "Basic rate", lower: 12570, upper: 50270, rate: 0.2 },
        { name: "Higher rate", lower: 50270, upper: 125140, rate: 0.4 },
        { name: "Additional rate", lower: 125140, upper: Infinity, rate: 0.45 },
      ];

      // Very simplified NI thresholds & rates (Class 1 employee)
      const NI_PRIMARY_THRESHOLD = 12570; // approx annual
      const NI_UPPER_EARNINGS_LIMIT = 50270;
      const NI_MAIN_RATE = 0.08; // illustrative
      const NI_ADDITIONAL_RATE = 0.02;

      // Student loan parameters (approximate)
      const studentLoanConfigs = {
        none: { label: "No student loan", threshold: Infinity, rate: 0 },
        plan2: { label: "Plan 2", threshold: 27295, rate: 0.09 },
        plan5: { label: "Plan 5", threshold: 25000, rate: 0.09 },
        postgrad: { label: "Postgraduate loan", threshold: 21000, rate: 0.06 },
      };

      function formatMoney(value) {
        return value.toLocaleString("en-GB", {
          style: "currency",
          currency: "GBP",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        return (value * 100).toFixed(1) + "%";
      }

      function getAnnualFromPeriod(amount, period) {
        if (!amount || amount <= 0) return 0;
        switch (period) {
          case "monthly":
            return amount * 12;
          case "weekly":
            return amount * 52;
          default:
            return amount;
        }
      }

      function getPeriodLabel(period) {
        switch (period) {
          case "monthly":
            return "per month";
          case "weekly":
            return "per week";
          default:
            return "per year";
        }
      }

      function calculateIncomeTax(taxableIncome, personalAllowance) {
        const pa = Math.max(0, personalAllowance || 0);
        let remaining = Math.max(0, taxableIncome - pa);
        let totalTax = 0;
        const bandResults = [];

        incomeTaxBands.forEach((band) => {
          if (remaining <= 0) {
            bandResults.push({ ...band, taxable: 0, tax: 0 });
            return;
          }
          const bandLower = band.lower - pa; // shift by allowance
          const bandUpper =
            band.upper === Infinity ? Infinity : band.upper - pa;
          const bandWidth = bandUpper - bandLower;
          const taxableInBand = Math.max(0, Math.min(remaining, bandWidth));
          const taxInBand = taxableInBand * band.rate;
          totalTax += taxInBand;
          remaining -= taxableInBand;
          bandResults.push({ ...band, taxable: taxableInBand, tax: taxInBand });
        });

        return { totalTax, bandResults };
      }

      function calculateNI(annualIncome) {
        const earnings = Math.max(0, annualIncome - NI_PRIMARY_THRESHOLD);
        if (earnings <= 0) return 0;
        const mainBand = Math.max(
          0,
          Math.min(earnings, NI_UPPER_EARNINGS_LIMIT - NI_PRIMARY_THRESHOLD)
        );
        const additionalBand = Math.max(0, earnings - mainBand);
        return mainBand * NI_MAIN_RATE + additionalBand * NI_ADDITIONAL_RATE;
      }

      function calculateStudentLoan(annualIncome, planKey) {
        const cfg = studentLoanConfigs[planKey] || studentLoanConfigs.none;
        if (cfg.threshold === Infinity) return 0;
        const excess = Math.max(0, annualIncome - cfg.threshold);
        return excess * cfg.rate;
      }

      function updatePensionLabel() {
        const pct = Number(document.getElementById("pensionPct").value) || 0;
        document.getElementById("pensionPctValue").textContent = pct + "%";
      }

      function populateBandTable(bandResults) {
        const tbody = document.getElementById("bandTableBody");
        tbody.innerHTML = "";
        bandResults.forEach((band) => {
          if (band.taxable <= 0 && band.tax <= 0) return;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-t border-gray-200">${band.name}</td>
        <td class="px-3 py-2 border-t border-gray-200 text-right">${formatMoney(
          band.taxable
        )}</td>
        <td class="px-3 py-2 border-t border-gray-200 text-right">${(
          band.rate * 100
        ).toFixed(1)}%</td>
        <td class="px-3 py-2 border-t border-gray-200 text-right">${formatMoney(
          band.tax
        )}</td>
      `;
          tbody.appendChild(tr);
        });
        if (!tbody.children.length) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="4" class="px-3 py-3 text-center text-gray-500 border-t border-gray-200">No income tax due.</td>`;
          tbody.appendChild(tr);
        }
      }

      function recalc() {
        const period = document.getElementById("payPeriod").value;
        const gross = Number(document.getElementById("grossIncome").value) || 0;
        const bonus = Number(document.getElementById("bonusIncome").value) || 0;
        const pensionPct =
          Number(document.getElementById("pensionPct").value) || 0;
        const personalAllowance =
          Number(document.getElementById("personalAllowance").value) || 0;
        const includeNI = document.getElementById("includeNI").checked;
        const studentLoanPlan =
          document.getElementById("studentLoanPlan").value;

        const annualGross = getAnnualFromPeriod(gross, period);
        const annualBonus = getAnnualFromPeriod(bonus, period);
        const totalAnnualIncome = annualGross + annualBonus;

        const pensionAnnual = totalAnnualIncome * (pensionPct / 100);
        const taxableIncome = totalAnnualIncome; // before pension (relief at source assumed)

        const { totalTax, bandResults } = calculateIncomeTax(
          taxableIncome,
          personalAllowance
        );
        const niAnnual = includeNI ? calculateNI(totalAnnualIncome) : 0;
        const studentLoanAnnual = calculateStudentLoan(
          totalAnnualIncome,
          studentLoanPlan
        );

        const totalDeductions =
          totalTax + niAnnual + studentLoanAnnual + pensionAnnual;
        const netAnnual = Math.max(0, totalAnnualIncome - totalDeductions);

        // Convert back to selected period
        let divisor = 1;
        if (period === "monthly") divisor = 12;
        if (period === "weekly") divisor = 52;

        const netPeriod = netAnnual / divisor;
        const taxPeriod = totalTax / divisor;
        const niPeriod = niAnnual / divisor;
        const slPeriod = studentLoanAnnual / divisor;
        const pensionPeriod = pensionAnnual / divisor;

        // Update summary cards
        document.getElementById("netIncomeDisplay").textContent =
          formatMoney(netPeriod);
        document.getElementById("netIncomePeriod").textContent =
          getPeriodLabel(period);

        document.getElementById("incomeTaxDisplay").textContent =
          formatMoney(taxPeriod);
        document.getElementById("niDisplay").textContent =
          formatMoney(niPeriod);
        document.getElementById("studentLoanDisplay").textContent =
          formatMoney(slPeriod);
        document.getElementById("pensionDisplay").textContent =
          formatMoney(pensionPeriod);

        const totalTaxPeriod = taxPeriod + niPeriod + slPeriod;
        document.getElementById("totalTaxDisplay").textContent =
          formatMoney(totalTaxPeriod);

        const effectiveRate =
          totalAnnualIncome > 0 ? totalTax / totalAnnualIncome : 0;
        document.getElementById("effectiveTaxRate").textContent =
          "Effective rate: " + formatPercent(effectiveRate);

        const niRate = totalAnnualIncome > 0 ? niAnnual / totalAnnualIncome : 0;
        document.getElementById("niRateDisplay").textContent =
          "Approx. NI rate: " + formatPercent(niRate);

        const pensionRate =
          totalAnnualIncome > 0 ? pensionAnnual / totalAnnualIncome : 0;
        document.getElementById("pensionRateDisplay").textContent =
          (pensionPct || 0) +
          "% of gross (" +
          formatPercent(pensionRate) +
          " of total)";

        const slCfg =
          studentLoanConfigs[studentLoanPlan] || studentLoanConfigs.none;
        document.getElementById("studentLoanPlanLabel").textContent =
          slCfg.label;

        // Very rough split of Welsh vs UK share: assume 10p of the basic rate is Welsh, 10p of higher, 10p of additional
        const welshShare = bandResults.reduce((sum, band) => {
          const welshPortionRate = 0.1; // 10p in the pound
          const baseRate = band.rate;
          const proportion = baseRate > 0 ? welshPortionRate / baseRate : 0;
          return sum + band.tax * proportion;
        }, 0);
        document.getElementById("welshTaxBreakdown").textContent =
          "Estimated Welsh share: " + formatMoney(welshShare / divisor);

        populateBandTable(bandResults);
      }

      document.addEventListener("DOMContentLoaded", () => {
        updatePensionLabel();
        document.getElementById("pensionPct").addEventListener("input", () => {
          updatePensionLabel();
          recalc();
        });
        document.getElementById("payPeriod").addEventListener("change", recalc);
        document
          .getElementById("grossIncome")
          .addEventListener("change", recalc);
        document
          .getElementById("bonusIncome")
          .addEventListener("change", recalc);
        document
          .getElementById("personalAllowance")
          .addEventListener("change", recalc);
        document.getElementById("includeNI").addEventListener("change", recalc);
        document
          .getElementById("studentLoanPlan")
          .addEventListener("change", recalc);
        document
          .getElementById("calculateBtn")
          .addEventListener("click", recalc);
        document
          .getElementById("resetAllowance")
          .addEventListener("click", () => {
            document.getElementById("personalAllowance").value = 12570;
            recalc();
          });

        recalc();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
