    <script>
      // Core CD calculation
      function calculateCd() {
        const deposit =
          parseFloat(document.getElementById("cd-deposit").value) || 0;
        const termVal =
          parseFloat(document.getElementById("cd-term-value").value) || 0;
        const termUnit = document.getElementById("cd-term-unit").value;
        const rateNominal =
          (parseFloat(document.getElementById("cd-rate").value) || 0) / 100;
        const compSelect = document.getElementById("cd-compounding").value;
        const taxRate =
          (parseFloat(document.getElementById("cd-tax-rate").value) || 0) / 100;

        const n = parseInt(compSelect, 10); // compounding periods per year; 0 means simple interest
        const years = termUnit === "years" ? termVal : termVal / 12;

        let finalBeforeTax = deposit;
        let totalInterest = 0;
        let apy = 0;

        if (deposit <= 0 || years <= 0 || rateNominal < 0) {
          updateSummary(deposit, years, rateNominal, apy, 0, 0, deposit);
          renderGrowthTable([]);
          return;
        }

        if (n > 0) {
          // Compound interest
          finalBeforeTax = deposit * Math.pow(1 + rateNominal / n, n * years);
          totalInterest = finalBeforeTax - deposit;
          apy = Math.pow(1 + rateNominal / n, n) - 1;
        } else {
          // Simple interest
          finalBeforeTax = deposit * (1 + rateNominal * years);
          totalInterest = finalBeforeTax - deposit;
          apy = rateNominal; // simple approximation
        }

        const tax = totalInterest * taxRate;
        const finalAfterTax = finalBeforeTax - tax;

        updateSummary(
          deposit,
          years,
          rateNominal,
          apy,
          totalInterest,
          tax,
          finalAfterTax
        );
        renderGrowthTable(generateGrowthSeries(deposit, rateNominal, n, years));
      }

      function updateSummary(
        deposit,
        years,
        rateNominal,
        apy,
        interest,
        tax,
        finalBalance
      ) {
        const termMonths = years * 12;
        const termLabel =
          termMonths >= 12
            ? `${years.toFixed(2).replace(/\.00$/, "")} years`
            : `${Math.round(termMonths)} months`;

        document.getElementById("cd-summary-deposit").textContent =
          formatCurrency(deposit);
        document.getElementById("cd-summary-term").textContent = termLabel;
        document.getElementById("cd-summary-rate").textContent =
          (rateNominal * 100).toFixed(2) + "% nominal";
        document.getElementById("cd-summary-apy").textContent =
          (apy * 100).toFixed(2) + "%";
        document.getElementById("cd-summary-interest").textContent =
          formatCurrency(interest);
        document.getElementById("cd-summary-tax").textContent =
          formatCurrency(tax);
        document.getElementById("cd-summary-final").textContent =
          formatCurrency(finalBalance);
      }

      function generateGrowthSeries(P, r, n, years) {
        const series = [];
        if (P <= 0 || years <= 0 || r < 0) return series;

        if (n > 0) {
          const totalPeriods = Math.round(n * years);
          let balance = P;
          for (let k = 1; k <= totalPeriods; k++) {
            const prev = balance;
            balance = P * Math.pow(1 + r / n, k);
            series.push({
              period: k,
              balance,
              interest: balance - prev,
            });
          }
        } else {
          // Simple interest: linear growth, show yearly points
          const steps = Math.max(1, Math.round(years));
          for (let k = 1; k <= steps; k++) {
            const t = Math.min(k, years);
            const balance = P * (1 + r * t);
            const prevBalance = k === 1 ? P : P * (1 + r * (t - 1));
            series.push({
              period: k,
              balance,
              interest: balance - prevBalance,
            });
          }
        }
        return series;
      }

      function renderGrowthTable(series) {
        const tbody = document.getElementById("cd-growth-table");
        tbody.innerHTML = "";
        if (!series || series.length === 0) {
          const tr = document.createElement("tr");
          tr.innerHTML =
            '<td colspan="3" class="px-2 py-2 text-center text-gray-500">Enter values and click "Calculate CD growth" to see the schedule.</td>';
          tbody.appendChild(tr);
          return;
        }

        const maxRows = 12;
        const step = Math.ceil(series.length / maxRows);
        for (let i = 0; i < series.length; i += step) {
          const row = series[i];
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-gray-700">#${row.period}</td>
        <td class="px-2 py-1 text-right text-gray-700">${formatCurrency(
          row.balance
        )}</td>
        <td class="px-2 py-1 text-right text-gray-700">${formatCurrency(
          row.interest
        )}</td>
      `;
          tbody.appendChild(tr);
        }

        // Ensure last period is shown
        const last = series[series.length - 1];
        if (
          series.length > maxRows &&
          series[series.length - 1].period !==
            series[series.length - step].period
        ) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-gray-700">#${last.period}</td>
        <td class="px-2 py-1 text-right text-gray-700">${formatCurrency(
          last.balance
        )}</td>
        <td class="px-2 py-1 text-right text-gray-700">${formatCurrency(
          last.interest
        )}</td>
      `;
          tbody.appendChild(tr);
        }
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0.00";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      // Comparison tool
      function compareCds() {
        const deposit =
          parseFloat(document.getElementById("cd-deposit").value) || 0;
        const apy1 =
          (parseFloat(document.getElementById("cd1-apy").value) || 0) / 100;
        const apy2 =
          (parseFloat(document.getElementById("cd2-apy").value) || 0) / 100;
        const m1 = parseFloat(document.getElementById("cd1-months").value) || 0;
        const m2 = parseFloat(document.getElementById("cd2-months").value) || 0;

        const resultEl = document.getElementById("cd-compare-result");

        if (deposit <= 0 || apy1 < 0 || apy2 < 0 || m1 <= 0 || m2 <= 0) {
          resultEl.textContent =
            "Enter a positive deposit, APYs, and terms for both CDs.";
          return;
        }

        const t1 = m1 / 12;
        const t2 = m2 / 12;

        const final1 = deposit * Math.pow(1 + apy1, t1);
        const final2 = deposit * Math.pow(1 + apy2, t2);

        let better, diff;
        if (final1 > final2) {
          better = "CD #1";
          diff = final1 - final2;
        } else if (final2 > final1) {
          better = "CD #2";
          diff = final2 - final1;
        } else {
          resultEl.textContent =
            "Both CDs yield the same final balance on this deposit.";
          return;
        }

        resultEl.textContent = `${better} yields about ${formatCurrency(
          diff
        )} more interest on a ${formatCurrency(
          deposit
        )} deposit over its term.`;
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("cd-calc-btn")
          .addEventListener("click", calculateCd);
        document
          .getElementById("cd-compare-btn")
          .addEventListener("click", compareCds);

        document
          .getElementById("cd-reinvest")
          .addEventListener("change", function () {
            const custom = document.getElementById("cd-reinvest-custom");
            if (this.value === "custom") {
              custom.classList.remove("hidden");
            } else {
              custom.classList.add("hidden");
            }
          });

        // Initial render
        calculateCd();
      });

      // Mobile menu script (simple toggle)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", String(isHidden));
          });
        }
      });

