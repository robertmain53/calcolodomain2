    <script>
      // RSVP Tracker Logic
      (function () {
        const STORAGE_KEY = "calcdomain_rsvp_tracker_v1";

        let guests = [];
        let editingId = null;

        const els = {
          form: document.getElementById("guest-form"),
          formTitle: document.getElementById("guest-form-title"),
          formSubmitText: document.getElementById("guest-form-submit-text"),
          formCancelEdit: document.getElementById("guest-form-cancel-edit"),
          formClear: document.getElementById("guest-form-clear"),
          name: document.getElementById("guest-name"),
          household: document.getElementById("guest-household"),
          email: document.getElementById("guest-email"),
          count: document.getElementById("guest-count"),
          status: document.getElementById("guest-status"),
          diet: document.getElementById("guest-diet"),
          side: document.getElementById("guest-side"),
          notes: document.getElementById("guest-notes"),
          vip: document.getElementById("guest-vip"),
          tableBody: document.getElementById("guest-table-body"),
          filterStatus: document.getElementById("filter-status"),
          filterSearch: document.getElementById("filter-search"),
          btnExportCsv: document.getElementById("btn-export-csv"),
          btnImportJson: document.getElementById("btn-import-json"),
          btnSaveJson: document.getElementById("btn-save-json"),
          btnClearAll: document.getElementById("btn-clear-all"),
          importFileInput: document.getElementById("import-file-input"),
          statTotalGuests: document.getElementById("stat-total-guests"),
          statAttending: document.getElementById("stat-attending"),
          statDeclined: document.getElementById("stat-declined"),
          statNoResponse: document.getElementById("stat-no-response"),
          detailInvited: document.getElementById("detail-invited"),
          detailConfirmed: document.getElementById("detail-confirmed"),
          detailNotComing: document.getElementById("detail-not-coming"),
          detailResponses: document.getElementById("detail-responses"),
          detailResponseRate: document.getElementById("detail-response-rate"),
          detailVipAttending: document.getElementById("detail-vip-attending"),
          deadlineMessage: document.getElementById("deadline-message"),
          eventDate: document.getElementById("event-date"),
          rsvpDeadline: document.getElementById("rsvp-deadline"),
        };

        function loadFromStorage() {
          try {
            const raw = localStorage.getItem(STORAGE_KEY);
            if (!raw) return;
            const data = JSON.parse(raw);
            if (Array.isArray(data.guests)) {
              guests = data.guests;
            }
            if (data.eventName)
              document.getElementById("event-name").value = data.eventName;
            if (data.eventDate) els.eventDate.value = data.eventDate;
            if (data.rsvpDeadline) els.rsvpDeadline.value = data.rsvpDeadline;
          } catch (e) {
            console.warn("Failed to load RSVP data", e);
          }
        }

        function saveToStorage() {
          try {
            const payload = {
              guests,
              eventName: document.getElementById("event-name").value || "",
              eventDate: els.eventDate.value || "",
              rsvpDeadline: els.rsvpDeadline.value || "",
            };
            localStorage.setItem(STORAGE_KEY, JSON.stringify(payload));
          } catch (e) {
            console.warn("Failed to save RSVP data", e);
          }
        }

        function resetForm() {
          editingId = null;
          els.formTitle.textContent = "Add guest";
          els.formSubmitText.textContent = "Add guest";
          els.formCancelEdit.classList.add("hidden");
          els.name.value = "";
          els.household.value = "";
          els.email.value = "";
          els.count.value = "1";
          els.status.value = "no-response";
          els.diet.value = "";
          els.side.value = "";
          els.notes.value = "";
          els.vip.checked = false;
        }

        function handleSubmit(e) {
          e.preventDefault();
          const name = els.name.value.trim();
          if (!name) {
            els.name.focus();
            return;
          }
          const guest = {
            id:
              editingId ||
              Date.now().toString(36) + Math.random().toString(36).slice(2),
            name,
            household: els.household.value.trim(),
            email: els.email.value.trim(),
            count: Math.max(1, parseInt(els.count.value, 10) || 1),
            status: els.status.value,
            diet: els.diet.value.trim(),
            side: els.side.value.trim(),
            notes: els.notes.value.trim(),
            vip: !!els.vip.checked,
          };

          if (editingId) {
            const idx = guests.findIndex((g) => g.id === editingId);
            if (idx !== -1) guests[idx] = guest;
          } else {
            guests.push(guest);
          }

          resetForm();
          render();
          saveToStorage();
        }

        function handleEdit(id) {
          const g = guests.find((x) => x.id === id);
          if (!g) return;
          editingId = id;
          els.formTitle.textContent = "Edit guest";
          els.formSubmitText.textContent = "Save changes";
          els.formCancelEdit.classList.remove("hidden");
          els.name.value = g.name;
          els.household.value = g.household || "";
          els.email.value = g.email || "";
          els.count.value = g.count || 1;
          els.status.value = g.status || "no-response";
          els.diet.value = g.diet || "";
          els.side.value = g.side || "";
          els.notes.value = g.notes || "";
          els.vip.checked = !!g.vip;
          window.scrollTo({ top: els.form.offsetTop - 80, behavior: "smooth" });
        }

        function handleDelete(id) {
          if (!confirm("Remove this guest from the list?")) return;
          guests = guests.filter((g) => g.id !== id);
          if (editingId === id) resetForm();
          render();
          saveToStorage();
        }

        function applyFilters(list) {
          const statusFilter = els.filterStatus.value;
          const search = els.filterSearch.value.trim().toLowerCase();
          return list.filter((g) => {
            if (statusFilter === "vip" && !g.vip) return false;
            if (
              statusFilter !== "all" &&
              statusFilter !== "vip" &&
              g.status !== statusFilter
            )
              return false;
            if (!search) return true;
            const haystack = [
              g.name,
              g.household,
              g.email,
              g.diet,
              g.side,
              g.notes,
            ]
              .join(" ")
              .toLowerCase();
            return haystack.includes(search);
          });
        }

        function renderTable() {
          const filtered = applyFilters(guests);
          els.tableBody.innerHTML = "";
          if (!filtered.length) {
            const tr = document.createElement("tr");
            const td = document.createElement("td");
            td.colSpan = 8;
            td.className = "px-3 py-3 text-center text-gray-500 text-sm";
            td.textContent =
              "No guests added yet. Use the form above to start your list.";
            tr.appendChild(td);
            els.tableBody.appendChild(tr);
            return;
          }

          filtered.forEach((g) => {
            const tr = document.createElement("tr");
            tr.className = "hover:bg-gray-50";

            const statusLabel =
              g.status === "attending"
                ? "Attending"
                : g.status === "declined"
                ? "Declined"
                : "No response";
            const statusColor =
              g.status === "attending"
                ? "bg-green-100 text-green-800"
                : g.status === "declined"
                ? "bg-red-100 text-red-800"
                : "bg-yellow-100 text-yellow-800";

            tr.innerHTML = `
          <td class="px-3 py-2 align-top">
            <div class="font-medium text-gray-900">${escapeHtml(g.name)}</div>
            ${
              g.email
                ? `<div class="text-xs text-gray-500">${escapeHtml(
                    g.email
                  )}</div>`
                : ""
            }
          </td>
          <td class="px-3 py-2 align-top text-gray-700">${
            g.household
              ? escapeHtml(g.household)
              : '<span class="text-gray-400 text-xs">—</span>'
          }</td>
          <td class="px-3 py-2 align-top">
            <span class="badge ${statusColor}">${statusLabel}</span>
          </td>
          <td class="px-3 py-2 align-top text-right font-medium">${
            g.count || 1
          }</td>
          <td class="px-3 py-2 align-top text-gray-700">${
            g.diet
              ? escapeHtml(g.diet)
              : '<span class="text-gray-400 text-xs">—</span>'
          }</td>
          <td class="px-3 py-2 align-top text-gray-700 max-w-xs">
            ${
              g.notes
                ? `<span class="block truncate" title="${escapeHtml(
                    g.notes
                  )}">${escapeHtml(g.notes)}</span>`
                : '<span class="text-gray-400 text-xs">—</span>'
            }
          </td>
          <td class="px-3 py-2 align-top text-center">
            ${
              g.vip
                ? '<span class="badge bg-purple-100 text-purple-800">VIP</span>'
                : '<span class="text-gray-300 text-xs">—</span>'
            }
          </td>
          <td class="px-3 py-2 align-top text-right">
            <button type="button" data-action="edit" data-id="${
              g.id
            }" class="text-blue-600 hover:underline text-xs mr-2">Edit</button>
            <button type="button" data-action="delete" data-id="${
              g.id
            }" class="text-red-600 hover:underline text-xs">Delete</button>
          </td>
        `;
            els.tableBody.appendChild(tr);
          });
        }

        function renderStats() {
          const totalInvited = guests.reduce(
            (sum, g) => sum + (g.count || 1),
            0
          );
          const attending = guests.filter((g) => g.status === "attending");
          const declined = guests.filter((g) => g.status === "declined");
          const noResponse = guests.filter((g) => g.status === "no-response");

          const attendingCount = attending.reduce(
            (sum, g) => sum + (g.count || 1),
            0
          );
          const declinedCount = declined.reduce(
            (sum, g) => sum + (g.count || 1),
            0
          );
          const noResponseCount = noResponse.reduce(
            (sum, g) => sum + (g.count || 1),
            0
          );

          els.statTotalGuests.textContent = totalInvited;
          els.statAttending.textContent = attendingCount;
          els.statDeclined.textContent = declinedCount;
          els.statNoResponse.textContent = noResponseCount;

          els.detailInvited.textContent = totalInvited;
          els.detailConfirmed.textContent = attendingCount;
          els.detailNotComing.textContent = declinedCount;

          const responses = attending.length + declined.length;
          els.detailResponses.textContent = responses;
          const responseRate = guests.length
            ? Math.round((responses / guests.length) * 100)
            : 0;
          els.detailResponseRate.textContent = responseRate + "%";

          const vipAttending = attending
            .filter((g) => g.vip)
            .reduce((sum, g) => sum + (g.count || 1), 0);
          els.detailVipAttending.textContent = vipAttending;

          renderDeadlineMessage();
        }

        function renderDeadlineMessage() {
          const deadlineStr = els.rsvpDeadline.value;
          if (!deadlineStr) {
            els.deadlineMessage.textContent =
              "Set an RSVP deadline to see a countdown.";
            return;
          }
          const today = new Date();
          const deadline = new Date(deadlineStr + "T23:59:59");
          const diffMs = deadline - today;
          const days = Math.ceil(diffMs / (1000 * 60 * 60 * 24));

          if (isNaN(days)) {
            els.deadlineMessage.textContent = "Invalid RSVP deadline date.";
            return;
          }

          if (days > 0) {
            els.deadlineMessage.textContent = `RSVP deadline is in ${days} day${
              days === 1 ? "" : "s"
            }.`;
          } else if (days === 0) {
            els.deadlineMessage.textContent = "RSVP deadline is today.";
          } else {
            els.deadlineMessage.textContent = `RSVP deadline passed ${Math.abs(
              days
            )} day${Math.abs(days) === 1 ? "" : "s"} ago.`;
          }
        }

        function render() {
          renderTable();
          renderStats();
        }

        function escapeHtml(str) {
          return String(str)
            .replace(/&/g, "&amp;")
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")
            .replace(/"/g, "&quot;")
            .replace(/'/g, "&#039;");
        }

        function exportCsv() {
          if (!guests.length) {
            alert("No guests to export.");
            return;
          }
          const header = [
            "Name",
            "Household",
            "Email",
            "Status",
            "GuestCount",
            "Dietary",
            "Side",
            "Notes",
            "VIP",
          ];
          const rows = guests.map((g) => [
            g.name,
            g.household || "",
            g.email || "",
            g.status || "",
            g.count || 1,
            g.diet || "",
            g.side || "",
            g.notes || "",
            g.vip ? "Yes" : "No",
          ]);

          const csv = [header, ...rows]
            .map((r) =>
              r
                .map((cell) => {
                  const s = String(cell ?? "");
                  if (/[",\n]/.test(s)) {
                    return '"' + s.replace(/"/g, '""') + '"';
                  }
                  return s;
                })
                .join(",")
            )
            .join("\n");

          const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          const eventName = (
            document.getElementById("event-name").value || "rsvp-list"
          )
            .replace(/[^a-z0-9\-]+/gi, "-")
            .toLowerCase();
          a.download = eventName + ".csv";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        }

        function downloadJson() {
          const payload = {
            eventName: document.getElementById("event-name").value || "",
            eventDate: els.eventDate.value || "",
            rsvpDeadline: els.rsvpDeadline.value || "",
            guests,
          };
          const blob = new Blob([JSON.stringify(payload, null, 2)], {
            type: "application/json",
          });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          const eventName = (payload.eventName || "rsvp-list")
            .replace(/[^a-z0-9\-]+/gi, "-")
            .toLowerCase();
          a.download = eventName + ".json";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        }

        function importJsonFile(file) {
          const reader = new FileReader();
          reader.onload = function (e) {
            try {
              const data = JSON.parse(e.target.result);
              if (!Array.isArray(data.guests)) {
                alert('Invalid JSON format: missing "guests" array.');
                return;
              }
              if (
                !confirm("Importing will replace the current list. Continue?")
              )
                return;
              guests = data.guests;
              if (data.eventName)
                document.getElementById("event-name").value = data.eventName;
              if (data.eventDate) els.eventDate.value = data.eventDate;
              if (data.rsvpDeadline) els.rsvpDeadline.value = data.rsvpDeadline;
              resetForm();
              render();
              saveToStorage();
            } catch (err) {
              console.error(err);
              alert("Could not read JSON file.");
            }
          };
          reader.readAsText(file);
        }

        function clearAll() {
          if (
            !guests.length &&
            !document.getElementById("event-name").value &&
            !els.eventDate.value &&
            !els.rsvpDeadline.value
          )
            return;
          if (
            !confirm(
              "Clear all guests and event details? This cannot be undone."
            )
          )
            return;
          guests = [];
          document.getElementById("event-name").value = "";
          els.eventDate.value = "";
          els.rsvpDeadline.value = "";
          resetForm();
          render();
          saveToStorage();
        }

        function init() {
          loadFromStorage();
          render();

          els.form.addEventListener("submit", handleSubmit);
          els.formClear.addEventListener("click", function () {
            resetForm();
          });
          els.formCancelEdit.addEventListener("click", function () {
            resetForm();
          });

          els.tableBody.addEventListener("click", function (e) {
            const btn = e.target.closest("button[data-action]");
            if (!btn) return;
            const id = btn.getAttribute("data-id");
            const action = btn.getAttribute("data-action");
            if (action === "edit") handleEdit(id);
            if (action === "delete") handleDelete(id);
          });

          els.filterStatus.addEventListener("change", renderTable);
          els.filterSearch.addEventListener("input", function () {
            renderTable();
          });

          els.btnExportCsv.addEventListener("click", exportCsv);
          els.btnSaveJson.addEventListener("click", downloadJson);
          els.btnImportJson.addEventListener("click", function () {
            els.importFileInput.click();
          });
          els.importFileInput.addEventListener("change", function (e) {
            const file = e.target.files[0];
            if (file) importJsonFile(file);
            e.target.value = "";
          });
          els.btnClearAll.addEventListener("click", clearAll);

          document
            .getElementById("event-name")
            .addEventListener("input", saveToStorage);
          els.eventDate.addEventListener("change", function () {
            saveToStorage();
          });
          els.rsvpDeadline.addEventListener("change", function () {
            renderDeadlineMessage();
            saveToStorage();
          });

          window.addEventListener("beforeunload", saveToStorage);
        }

        if (document.readyState === "loading") {
          document.addEventListener("DOMContentLoaded", init);
        } else {
          init();
        }
      })();
    </script>

