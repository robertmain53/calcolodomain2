    <script>
      // --- Tax logic (simplified, illustrative only) ---
      const nwtBrackets2024 = [
        { upTo: 50000, rate: 0.059 },
        { upTo: 100000, rate: 0.086 },
        { upTo: 155000, rate: 0.122 },
        { upTo: Infinity, rate: 0.1405 },
      ];

      const federalBrackets2024 = [
        { upTo: 55867, rate: 0.15 },
        { upTo: 111733, rate: 0.205 },
        { upTo: 173205, rate: 0.26 },
        { upTo: 246752, rate: 0.29 },
        { upTo: Infinity, rate: 0.33 },
      ];

      function calculateProgressiveTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        let marginalRate = 0;

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const taxableInBracket = Math.min(
            remaining,
            bracket.upTo - lastLimit
          );
          tax += taxableInBracket * bracket.rate;
          remaining -= taxableInBracket;
          lastLimit = bracket.upTo;
          if (remaining <= 0) {
            marginalRate = bracket.rate;
            break;
          }
        }
        return { tax, marginalRate };
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function recalc() {
        const income =
          parseFloat(document.getElementById("employment-income").value) || 0;
        const deductions =
          parseFloat(document.getElementById("deductions").value) || 0;
        const credits =
          parseFloat(document.getElementById("nonrefundable-credits").value) ||
          0;
        const includeFederal =
          document.getElementById("include-federal").checked;

        const taxable = Math.max(0, income - deductions);

        const nwtResult = calculateProgressiveTax(taxable, nwtBrackets2024);
        let nwtTax = Math.max(0, nwtResult.tax - credits);

        const nwtAverageRate = taxable > 0 ? nwtTax / taxable : 0;

        document.getElementById("nwt-taxable").textContent =
          formatCurrency(taxable);
        document.getElementById("nwt-tax").textContent = formatCurrency(nwtTax);
        document.getElementById("nwt-average-rate").textContent =
          formatPercent(nwtAverageRate);
        document.getElementById("nwt-marginal-rate").textContent =
          formatPercent(nwtResult.marginalRate);

        let federalTax = 0;
        let federalMarginal = 0;
        if (includeFederal) {
          const fedResult = calculateProgressiveTax(
            taxable,
            federalBrackets2024
          );
          federalTax = fedResult.tax;
          federalMarginal = fedResult.marginalRate;
        }

        const totalTax = nwtTax + federalTax;
        const totalAverageRate = taxable > 0 ? totalTax / taxable : 0;
        const totalMarginalRate =
          nwtResult.marginalRate + (includeFederal ? federalMarginal : 0);

        document.getElementById("federal-tax").textContent =
          formatCurrency(federalTax);
        document.getElementById("total-tax").textContent =
          formatCurrency(totalTax);
        document.getElementById("total-average-rate").textContent =
          formatPercent(totalAverageRate);
        document.getElementById("total-marginal-rate").textContent =
          formatPercent(totalMarginalRate);
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", recalc);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("employment-income").value = 60000;
        document.getElementById("deductions").value = 5000;
        document.getElementById("nonrefundable-credits").value = 2000;
        document.getElementById("include-federal").checked = false;
        recalc();
      });

      [
        "employment-income",
        "deductions",
        "nonrefundable-credits",
        "include-federal",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", () => {
          // live update for better UX
          recalc();
        });
      });

      // Initial calculation
      recalc();
    </script>

