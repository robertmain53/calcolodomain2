    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "-";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      function formatNumber(value, digits = 2) {
        if (!isFinite(value)) return "-";
        return value.toLocaleString(undefined, {
          minimumFractionDigits: digits,
          maximumFractionDigits: digits,
        });
      }

      function calculateSchedule(params, withPrepayment) {
        const {
          principal,
          ratePerPeriod,
          totalPayments,
          extraPayment,
          extraStartPayment,
          lumpSum,
          lumpPaymentNumber,
          penalty,
        } = params;

        let balance = principal;
        const schedule = [];
        let totalInterest = 0;
        let totalPaid = 0;
        let paymentNumber = 0;
        let penaltyApplied = false;

        // Base payment from standard amortization formula
        const basePayment =
          ratePerPeriod === 0
            ? principal / totalPayments
            : (principal *
                (ratePerPeriod * Math.pow(1 + ratePerPeriod, totalPayments))) /
              (Math.pow(1 + ratePerPeriod, totalPayments) - 1);

        while (balance > 0 && paymentNumber < totalPayments + 600) {
          paymentNumber++;
          const interest = balance * ratePerPeriod;
          let principalComponent = basePayment - interest;
          if (principalComponent < 0) principalComponent = 0;

          let extra = 0;
          let lump = 0;

          if (withPrepayment) {
            if (extraPayment > 0 && paymentNumber >= extraStartPayment) {
              extra = extraPayment;
            }
            if (lumpSum > 0 && paymentNumber === lumpPaymentNumber) {
              lump = lumpSum;
            }
          }

          // Adjust last payment so we don't overpay
          let totalThisPayment = principalComponent + interest + extra + lump;
          if (totalThisPayment > balance + interest) {
            const over = totalThisPayment - (balance + interest);
            if (lump >= over) {
              lump -= over;
            } else if (extra >= over - lump) {
              extra -= over - lump;
            } else {
              principalComponent -= over - lump - extra;
            }
            totalThisPayment = principalComponent + interest + extra + lump;
          }

          balance = balance + interest - (principalComponent + extra + lump);
          if (balance < 0) balance = 0;

          totalInterest += interest;
          totalPaid += totalThisPayment;

          schedule.push({
            n: paymentNumber,
            payment: totalThisPayment,
            interest,
            principal: principalComponent + extra + lump,
            extra: extra + lump,
            balance,
          });

          // Apply penalty once when first prepayment occurs within penalty period
          if (
            withPrepayment &&
            !penaltyApplied &&
            (extra > 0 || lump > 0) &&
            penalty.type !== "none"
          ) {
            const yearsElapsed = paymentNumber / params.paymentsPerYear;
            if (
              yearsElapsed <= penalty.appliesUntilYears ||
              penalty.appliesUntilYears === 0
            ) {
              let penaltyAmount = 0;
              if (penalty.type === "percentBalance") {
                penaltyAmount = (penalty.value / 100) * balance;
              } else if (penalty.type === "monthsInterest") {
                const monthlyRate = params.annualRate / 12;
                penaltyAmount = balance * monthlyRate * penalty.value;
              } else if (penalty.type === "flat") {
                penaltyAmount = penalty.value;
              }
              totalPaid += penaltyAmount;
              totalInterest += penaltyAmount; // treat penalty as cost similar to interest
              penaltyApplied = true;
            }
          }

          if (balance <= 0) break;
        }

        return {
          schedule,
          basePayment,
          totalInterest,
          totalPaid,
          numPayments: paymentNumber,
        };
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorMsg = document.getElementById("errorMsg");

        const summarySection = document.getElementById("summarySection");
        const detailsSection = document.getElementById("detailsSection");

        const origPaymentEl = document.getElementById("origPayment");
        const origInterestEl = document.getElementById("origInterest");
        const origNumPaymentsEl = document.getElementById("origNumPayments");

        const prepmtPaymentEl = document.getElementById("prepmtPayment");
        const prepmtInterestEl = document.getElementById("prepmtInterest");
        const prepmtNumPaymentsEl =
          document.getElementById("prepmtNumPayments");
        const interestSavedEl = document.getElementById("interestSaved");
        const timeSavedEl = document.getElementById("timeSaved");

        const originalTbody = document.getElementById("originalTbody");
        const prepaymentTbody = document.getElementById("prepaymentTbody");

        const tabOriginal = document.getElementById("tabOriginal");
        const tabPrepayment = document.getElementById("tabPrepayment");
        const originalScheduleDiv = document.getElementById("originalSchedule");
        const prepaymentScheduleDiv =
          document.getElementById("prepaymentSchedule");

        tabOriginal.addEventListener("click", () => {
          tabOriginal.classList.add("tab-active");
          tabOriginal.classList.remove("tab-inactive");
          tabPrepayment.classList.add("tab-inactive");
          tabPrepayment.classList.remove("tab-active");
          originalScheduleDiv.classList.remove("hidden");
          prepaymentScheduleDiv.classList.add("hidden");
        });

        tabPrepayment.addEventListener("click", () => {
          tabPrepayment.classList.add("tab-active");
          tabPrepayment.classList.remove("tab-inactive");
          tabOriginal.classList.add("tab-inactive");
          tabOriginal.classList.remove("tab-active");
          prepaymentScheduleDiv.classList.remove("hidden");
          originalScheduleDiv.classList.add("hidden");
        });

        calculateBtn.addEventListener("click", () => {
          errorMsg.textContent = "";

          const loanAmount = parseFloat(
            document.getElementById("loanAmount").value
          );
          const annualRate =
            parseFloat(document.getElementById("annualRate").value) / 100;
          const termYears = parseFloat(
            document.getElementById("termYears").value
          );
          const paymentsPerYear = parseInt(
            document.getElementById("paymentsPerYear").value,
            10
          );

          const currentBalanceInput = parseFloat(
            document.getElementById("currentBalance").value
          );
          const paymentsMadeInput = parseInt(
            document.getElementById("paymentsMade").value,
            10
          );

          const extraPayment =
            parseFloat(document.getElementById("extraPayment").value) || 0;
          const extraStartPayment =
            parseInt(document.getElementById("extraStartPayment").value, 10) ||
            1;
          const lumpSum =
            parseFloat(document.getElementById("lumpSum").value) || 0;
          const lumpPaymentNumber =
            parseInt(document.getElementById("lumpPaymentNumber").value, 10) ||
            1;

          const penaltyType = document.getElementById("penaltyType").value;
          const penaltyValue =
            parseFloat(document.getElementById("penaltyValue").value) || 0;
          const penaltyAppliesUntil =
            parseFloat(document.getElementById("penaltyAppliesUntil").value) ||
            0;

          if (
            !loanAmount ||
            loanAmount <= 0 ||
            !annualRate ||
            annualRate < 0 ||
            !termYears ||
            termYears <= 0
          ) {
            errorMsg.textContent =
              "Please enter a valid loan amount, interest rate, and term.";
            summarySection.classList.add("hidden");
            detailsSection.classList.add("hidden");
            return;
          }

          const totalPayments = Math.round(termYears * paymentsPerYear);
          const ratePerPeriod = annualRate / paymentsPerYear;

          let principal = loanAmount;
          let paymentsAlreadyMade = 0;

          if (
            currentBalanceInput &&
            currentBalanceInput > 0 &&
            currentBalanceInput < loanAmount
          ) {
            principal = currentBalanceInput;
          }
          if (paymentsMadeInput && paymentsMadeInput > 0) {
            paymentsAlreadyMade = paymentsMadeInput;
          }

          const baseParams = {
            principal,
            annualRate,
            ratePerPeriod,
            totalPayments: totalPayments - paymentsAlreadyMade,
            paymentsPerYear,
            extraPayment: 0,
            extraStartPayment: 1,
            lumpSum: 0,
            lumpPaymentNumber: 1,
            penalty: {
              type: "none",
              value: 0,
              appliesUntilYears: 0,
            },
          };

          const prepayParams = {
            principal,
            annualRate,
            ratePerPeriod,
            totalPayments: totalPayments - paymentsAlreadyMade,
            paymentsPerYear,
            extraPayment,
            extraStartPayment,
            lumpSum,
            lumpPaymentNumber,
            penalty: {
              type: penaltyType,
              value: penaltyValue,
              appliesUntilYears: penaltyAppliesUntil,
            },
          };

          const original = calculateSchedule(baseParams, false);
          const prepay = calculateSchedule(prepayParams, true);

          // Populate summary
          origPaymentEl.textContent = formatCurrency(original.basePayment);
          origInterestEl.textContent = formatCurrency(original.totalInterest);
          origNumPaymentsEl.textContent = original.numPayments.toString();

          const avgPrepayPayment = prepay.totalPaid / prepay.numPayments;
          prepmtPaymentEl.textContent = formatCurrency(avgPrepayPayment);
          prepmtInterestEl.textContent = formatCurrency(prepay.totalInterest);
          prepmtNumPaymentsEl.textContent = prepay.numPayments.toString();

          const interestSaved = original.totalInterest - prepay.totalInterest;
          interestSavedEl.textContent =
            (interestSaved >= 0 ? "" : "-") +
            formatCurrency(Math.abs(interestSaved));

          const periodsSaved = original.numPayments - prepay.numPayments;
          const yearsSaved = periodsSaved / paymentsPerYear;
          const wholeYears = Math.floor(yearsSaved);
          const monthsSaved = Math.round((yearsSaved - wholeYears) * 12);
          if (periodsSaved > 0) {
            timeSavedEl.textContent = `${wholeYears} years ${monthsSaved} months (${periodsSaved} payments)`;
          } else {
            timeSavedEl.textContent =
              "No time saved (or prepayment increases total cost due to penalty).";
          }

          // Populate tables (limit to 360 rows for readability)
          originalTbody.innerHTML = "";
          prepaymentTbody.innerHTML = "";

          original.schedule.slice(0, 360).forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="border px-2 py-1 text-right">${row.n}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.payment
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.interest
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.principal
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.balance
          )}</td>
        `;
            originalTbody.appendChild(tr);
          });

          prepay.schedule.slice(0, 360).forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="border px-2 py-1 text-right">${row.n}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.payment
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.interest
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.principal - row.extra
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.extra
          )}</td>
          <td class="border px-2 py-1 text-right">${formatCurrency(
            row.balance
          )}</td>
        `;
            prepaymentTbody.appendChild(tr);
          });

          summarySection.classList.remove("hidden");
          detailsSection.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          document.getElementById("loanAmount").value = "";
          document.getElementById("annualRate").value = "";
          document.getElementById("termYears").value = "";
          document.getElementById("paymentsPerYear").value = "12";
          document.getElementById("currentBalance").value = "";
          document.getElementById("paymentsMade").value = "";
          document.getElementById("extraPayment").value = "";
          document.getElementById("extraStartPayment").value = "";
          document.getElementById("lumpSum").value = "";
          document.getElementById("lumpPaymentNumber").value = "";
          document.getElementById("penaltyType").value = "none";
          document.getElementById("penaltyValue").value = "";
          document.getElementById("penaltyAppliesUntil").value = "";
          document.getElementById("errorMsg").textContent = "";
          document.getElementById("summarySection").classList.add("hidden");
          document.getElementById("detailsSection").classList.add("hidden");
          document.getElementById("originalTbody").innerHTML = "";
          document.getElementById("prepaymentTbody").innerHTML = "";
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
