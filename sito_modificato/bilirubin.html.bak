    <script>
      // Core calculation logic
      function toMgDl(value, unit) {
        if (isNaN(value) || value === null) return null;
        return unit === "mgdl" ? value : value / 17.1;
      }

      function formatBili(mgdl) {
        if (mgdl === null) return "N/A";
        const umol = mgdl * 17.1;
        return mgdl.toFixed(1) + " mg/dL (" + umol.toFixed(0) + " µmol/L)";
      }

      function classifyRisk(ageH, totalMgDl, gestAge, hasMajorRisk) {
        if (ageH < 24) {
          if (totalMgDl >= 5) return "high";
          return "intermediate";
        }
        let lowCut, highCut;
        if (ageH < 48) {
          lowCut = 10;
          highCut = 15;
        } else if (ageH < 72) {
          lowCut = 12;
          highCut = 17;
        } else {
          lowCut = 15;
          highCut = 20;
        }
        // Adjust for prematurity and risk factors
        if (gestAge !== "term") {
          lowCut -= 2;
          highCut -= 3;
        }
        if (hasMajorRisk) {
          lowCut -= 1;
          highCut -= 2;
        }
        if (totalMgDl < lowCut) return "low";
        if (totalMgDl >= highCut) return "high";
        return "intermediate";
      }

      function getRiskBadgeConfig(risk) {
        switch (risk) {
          case "low":
            return {
              text: "Low risk (approximate)",
              classes: "bg-green-100 text-green-800 border border-green-300",
            };
          case "intermediate":
            return {
              text: "Intermediate risk (approximate)",
              classes: "bg-amber-100 text-amber-800 border border-amber-300",
            };
          case "high":
            return {
              text: "High risk (approximate)",
              classes: "bg-red-100 text-red-800 border border-red-300",
            };
          default:
            return { text: "", classes: "" };
        }
      }

      function buildClinicalAdvice(risk, ageH, totalMgDl, cholestasisFlag) {
        let advice = "";
        if (cholestasisFlag) {
          advice +=
            "The pattern suggests possible conjugated (direct) hyperbilirubinemia, which may indicate liver or bile duct disease. This requires urgent specialist evaluation, regardless of the total bilirubin level. ";
        }
        if (ageH < 24) {
          advice +=
            "Any jaundice in the first 24 hours of life is considered abnormal. Your baby should be seen by a pediatrician or in an emergency department as soon as possible.";
          return advice;
        }
        if (risk === "low") {
          advice +=
            "For a baby of this age and risk profile, the bilirubin level appears in a low-risk range. Continue normal feeding, monitor jaundice, and attend routine follow-up as advised by your pediatrician.";
        } else if (risk === "intermediate") {
          advice +=
            "The bilirubin level is in an intermediate range. Your baby should be reviewed by a pediatrician soon (usually within 24 hours) to decide whether repeat testing or treatment is needed.";
        } else if (risk === "high") {
          advice +=
            "The bilirubin level is high for this age and risk profile. Your baby needs urgent medical assessment for possible phototherapy or other treatment. Contact your pediatrician or emergency services immediately.";
        }
        if (totalMgDl >= 20) {
          advice +=
            " Very high levels (≥ 20 mg/dL / 342 µmol/L) are associated with increased risk of bilirubin-induced neurologic dysfunction and require emergency care.";
        }
        return advice;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const ageHoursEl = document.getElementById("ageHours");
        const totalBiliEl = document.getElementById("totalBili");
        const totalUnitEl = document.getElementById("totalUnit");
        const directBiliEl = document.getElementById("directBili");
        const directUnitEl = document.getElementById("directUnit");
        const gestAgeEl = document.getElementById("gestAge");
        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");

        const resultsSection = document.getElementById("resultsSection");
        const riskBadge = document.getElementById("riskBadge");
        const stdTotal = document.getElementById("stdTotal");
        const stdDirect = document.getElementById("stdDirect");
        const indirectInfo = document.getElementById("indirectInfo");
        const ageInfo = document.getElementById("ageInfo");
        const riskInfo = document.getElementById("riskInfo");
        const clinicalAdvice = document.getElementById("clinicalAdvice");

        calculateBtn.addEventListener("click", function () {
          const ageH = parseFloat(ageHoursEl.value);
          const totalVal = parseFloat(totalBiliEl.value);
          const totalUnit = totalUnitEl.value;
          const directValRaw = directBiliEl.value.trim();
          const directVal =
            directValRaw === "" ? null : parseFloat(directValRaw);
          const directUnit = directUnitEl.value;
          const gestAge = gestAgeEl.value;

          if (isNaN(ageH) || ageH < 0 || ageH > 336) {
            alert(
              "Please enter a valid age in hours between 0 and 336 (0–14 days)."
            );
            return;
          }
          if (isNaN(totalVal) || totalVal < 0) {
            alert("Please enter a valid total bilirubin value.");
            return;
          }

          const totalMgDl = toMgDl(totalVal, totalUnit);
          const directMgDl =
            directVal === null || isNaN(directVal)
              ? null
              : toMgDl(directVal, directUnit);

          const hasMajorRisk =
            document.getElementById("rfHemolysis").checked ||
            document.getElementById("rfG6pd").checked ||
            document.getElementById("rfSepsis").checked ||
            document.getElementById("rfAsphyxia").checked ||
            document.getElementById("rfAlbumin").checked;

          const risk = classifyRisk(ageH, totalMgDl, gestAge, hasMajorRisk);
          const badgeCfg = getRiskBadgeConfig(risk);

          // Cholestasis flag
          let cholestasisFlag = false;
          let indirectText = "";
          if (directMgDl !== null) {
            const fraction = totalMgDl > 0 ? directMgDl / totalMgDl : 0;
            if ((directMgDl > 1 && totalMgDl < 5) || fraction > 0.2) {
              cholestasisFlag = true;
            }
            const indirect = Math.max(totalMgDl - directMgDl, 0);
            indirectText =
              "Estimated unconjugated (indirect) bilirubin: " +
              indirect.toFixed(1) +
              " mg/dL (" +
              (indirect * 17.1).toFixed(0) +
              " µmol/L).";
          }

          // Populate UI
          stdTotal.textContent = "Total bilirubin: " + formatBili(totalMgDl);
          if (directMgDl !== null) {
            stdDirect.textContent =
              "Direct (conjugated) bilirubin: " + formatBili(directMgDl);
            indirectInfo.textContent = indirectText;
          } else {
            stdDirect.textContent =
              "Direct (conjugated) bilirubin: not provided.";
            indirectInfo.textContent =
              "Without direct bilirubin, the calculator cannot screen for cholestasis.";
          }

          ageInfo.textContent =
            "Age: " +
            ageH.toFixed(0) +
            " hours (" +
            (ageH / 24).toFixed(1) +
            " days), gestational age: " +
            (gestAge === "term"
              ? "term (≥ 38 weeks)"
              : gestAge === "late-preterm"
              ? "late preterm (35–37 weeks)"
              : "preterm / unknown");

          let rfText = "Risk factors: ";
          const selected = [];
          if (document.getElementById("rfHemolysis").checked)
            selected.push("hemolysis / blood group incompatibility");
          if (document.getElementById("rfG6pd").checked)
            selected.push("G6PD deficiency");
          if (document.getElementById("rfSepsis").checked)
            selected.push("sepsis / serious illness");
          if (document.getElementById("rfAsphyxia").checked)
            selected.push("perinatal asphyxia");
          if (document.getElementById("rfAlbumin").checked)
            selected.push("low albumin / poor feeding");
          if (document.getElementById("rfSibling").checked)
            selected.push("sibling treated for jaundice");

          rfText += selected.length ? selected.join(", ") : "none selected.";
          riskInfo.textContent = rfText;

          riskBadge.textContent = badgeCfg.text;
          riskBadge.className = "badge " + badgeCfg.classes;

          clinicalAdvice.textContent = buildClinicalAdvice(
            risk,
            ageH,
            totalMgDl,
            cholestasisFlag
          );

          resultsSection.classList.remove("hidden");
          resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
        });

        resetBtn.addEventListener("click", function () {
          document.getElementById("bilirubin-form").reset();
          resultsSection.classList.add("hidden");
        });
      });

      // Mobile menu script (simple)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
