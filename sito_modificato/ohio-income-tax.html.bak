    <script>
      // Simplified Ohio tax model constants (illustrative, not official)
      const OH_BRACKETS = [
        { upTo: 26050, rate: 0.0 }, // 0% up to threshold
        { upTo: 100000, rate: 0.0275 }, // 2.75% on next band
        { upTo: Infinity, rate: 0.035 }, // 3.5% above that
      ];

      function getStandardDeduction(status) {
        // Approximate Ohio standard deduction by filing status (illustrative)
        switch (status) {
          case "mfj":
            return 5000 * 2; // joint roughly double
          case "mfs":
          case "single":
          default:
            return 5000;
        }
      }

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return "$" + value.toFixed(0).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(2).replace(/\.00$/, "") + "%";
      }

      function computeOhioStateTax(taxableIncome) {
        let remaining = Math.max(0, taxableIncome);
        let tax = 0;
        let lastLimit = 0;

        for (const bracket of OH_BRACKETS) {
          if (remaining <= 0) break;
          const bandIncome = Math.min(remaining, bracket.upTo - lastLimit);
          if (bandIncome > 0) {
            tax += bandIncome * bracket.rate;
            remaining -= bandIncome;
            lastLimit = bracket.upTo;
          }
        }
        return tax;
      }

      function calculateOhioTax() {
        const status = document.getElementById("filing-status").value;
        const income =
          parseFloat(document.getElementById("annual-income").value) || 0;
        const pretax =
          parseFloat(document.getElementById("pretax-deductions").value) || 0;
        const credits =
          parseFloat(document.getElementById("ohio-credits").value) || 0;
        const localRate =
          parseFloat(document.getElementById("local-rate").value) || 0;
        const payFreq = document.getElementById("pay-frequency").value;
        const errorEl = document.getElementById("calc-error");

        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        if (income < 0 || pretax < 0 || credits < 0 || localRate < 0) {
          errorEl.textContent = "Inputs cannot be negative.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (pretax > income) {
          errorEl.textContent =
            "Pre-tax deductions cannot exceed gross income.";
          errorEl.classList.remove("hidden");
          return;
        }

        const adjustedIncome = Math.max(0, income - pretax);
        const stdDed = getStandardDeduction(status);
        const taxableIncome = Math.max(0, adjustedIncome - stdDed);

        let stateTax = computeOhioStateTax(taxableIncome);
        let netStateTax = Math.max(0, stateTax - credits);

        const localTax = income * (localRate / 100);
        const totalTax = netStateTax + localTax;

        const effectiveRate = income > 0 ? totalTax / income : 0;
        const takeHomeAnnual = income - totalTax;

        let periodsPerYear = 1;
        if (payFreq === "monthly") periodsPerYear = 12;
        else if (payFreq === "biweekly") periodsPerYear = 26;
        else if (payFreq === "weekly") periodsPerYear = 52;

        const takeHomePerPeriod =
          periodsPerYear > 0 ? takeHomeAnnual / periodsPerYear : takeHomeAnnual;

        // Update UI
        document.getElementById("out-taxable-income").textContent =
          formatMoney(taxableIncome);
        document.getElementById("out-state-tax").textContent =
          formatMoney(netStateTax);
        document.getElementById("out-local-tax").textContent =
          formatMoney(localTax);
        document.getElementById("out-total-tax").textContent =
          formatMoney(totalTax);
        document.getElementById("out-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("out-takehome-annual").textContent =
          formatMoney(takeHomeAnnual);
        document.getElementById("out-takehome-period").textContent =
          formatMoney(takeHomePerPeriod);
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateOhioTax);
        // Auto-run once with defaults
        calculateOhioTax();
      });

      // Mobile menu script (simple toggle)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
