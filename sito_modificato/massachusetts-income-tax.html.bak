    <script>
      // Massachusetts tax parameters (simplified, easily adjustable)
      const MA_PARAMS = {
        2024: {
          flatRate: 0.05, // example flat rate; adjust as law changes
          personalExemption: {
            single: 4800,
            mfj: 9600,
            mfs: 4800,
            hoh: 7200,
          },
          dependentExemptionPerPerson: 1000,
        },
        2023: {
          flatRate: 0.05,
          personalExemption: {
            single: 4800,
            mfj: 9600,
            mfs: 4800,
            hoh: 7200,
          },
          dependentExemptionPerPerson: 1000,
        },
      };

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getSelectedYearParams() {
        const year = document.getElementById("ma-tax-year").value;
        return MA_PARAMS[year] || MA_PARAMS[2024];
      }

      function calculateMaTax() {
        const errorEl = document.getElementById("ma-error");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        const income =
          parseFloat(document.getElementById("ma-income").value) || 0;
        const preTax =
          parseFloat(document.getElementById("ma-pre-tax").value) || 0;
        const otherDed =
          parseFloat(document.getElementById("ma-other-deductions").value) || 0;
        const dependents =
          parseInt(document.getElementById("ma-dependents").value, 10) || 0;
        const filingStatus = document.getElementById("ma-filing-status").value;
        const payFreq = document.getElementById("ma-pay-frequency").value;
        const nonresident = document.getElementById("ma-nonresident").checked;
        const maSourcePct =
          parseInt(document.getElementById("ma-ma-source").value, 10) || 100;

        if (income < 0 || preTax < 0 || otherDed < 0) {
          errorEl.textContent = "Income and deductions cannot be negative.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (preTax + otherDed > income) {
          errorEl.textContent = "Total deductions cannot exceed gross income.";
          errorEl.classList.remove("hidden");
          return;
        }

        const params = getSelectedYearParams();

        const personalEx =
          params.personalExemption[filingStatus] ||
          params.personalExemption.single;
        const depEx =
          Math.max(0, dependents) * params.dependentExemptionPerPerson;

        let baseTaxable = income - preTax - otherDed - personalEx - depEx;
        baseTaxable = Math.max(0, baseTaxable);

        const allocationFactor = nonresident ? maSourcePct / 100 : 1;
        const maTaxable = baseTaxable * allocationFactor;

        const tax = maTaxable * params.flatRate;
        const effectiveRate = income > 0 ? tax / income : 0;
        const marginalRate = params.flatRate;

        const netAnnual = income - tax;
        let divisor = 1;
        let periodLabel = "Per‑paycheck";
        switch (payFreq) {
          case "monthly":
            divisor = 12;
            periodLabel = "Monthly take‑home";
            break;
          case "biweekly":
            divisor = 26;
            periodLabel = "Bi‑weekly take‑home";
            break;
          case "weekly":
            divisor = 52;
            periodLabel = "Weekly take‑home";
            break;
          default:
            divisor = 1;
            periodLabel = "Per‑paycheck";
        }
        const netPeriod = netAnnual / divisor;

        // Update UI
        document.getElementById("ma-taxable-income").textContent =
          formatCurrency(maTaxable);
        document.getElementById("ma-state-tax").textContent =
          formatCurrency(tax);
        document.getElementById("ma-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("ma-marginal-rate").textContent =
          formatPercent(marginalRate);
        document.getElementById("ma-net-annual").textContent =
          formatCurrency(netAnnual);
        document.getElementById("ma-net-period").textContent =
          formatCurrency(netPeriod);
        document.getElementById("ma-net-period-label").textContent =
          periodLabel;

        const totalDeductions = personalEx + depEx + otherDed + preTax;
        document.getElementById("ma-total-deductions").textContent =
          formatCurrency(totalDeductions);

        document.getElementById("ma-exemption-amount").textContent =
          formatCurrency(personalEx);
        document.getElementById("ma-dependent-exemptions").textContent =
          formatCurrency(depEx);
        document.getElementById("ma-other-deductions-out").textContent =
          formatCurrency(otherDed);
        document.getElementById("ma-allocation-factor").textContent =
          formatPercent(allocationFactor);
      }

      function resetMaCalculator() {
        document.getElementById("ma-filing-status").value = "single";
        document.getElementById("ma-tax-year").value = "2024";
        document.getElementById("ma-income").value = 85000;
        document.getElementById("ma-pre-tax").value = 0;
        document.getElementById("ma-other-deductions").value = 0;
        document.getElementById("ma-dependents").value = 0;
        document.getElementById("ma-pay-frequency").value = "annual";
        document.getElementById("ma-nonresident").checked = false;
        document.getElementById("ma-ma-source").value = 100;
        document.getElementById("ma-ma-source-output").textContent = "100%";
        document.getElementById("ma-ma-source-wrapper").classList.add("hidden");
        document.getElementById("ma-error").classList.add("hidden");
        calculateMaTax();
      }

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("ma-calc-btn")
          .addEventListener("click", calculateMaTax);
        document
          .getElementById("ma-reset-btn")
          .addEventListener("click", resetMaCalculator);

        document
          .getElementById("ma-nonresident")
          .addEventListener("change", (e) => {
            const wrapper = document.getElementById("ma-ma-source-wrapper");
            if (e.target.checked) {
              wrapper.classList.remove("hidden");
            } else {
              wrapper.classList.add("hidden");
            }
            calculateMaTax();
          });

        document
          .getElementById("ma-ma-source")
          .addEventListener("input", (e) => {
            document.getElementById("ma-ma-source-output").textContent =
              e.target.value + "%";
          });

        // Recalculate on key inputs change (debounced feel)
        [
          "ma-income",
          "ma-pre-tax",
          "ma-other-deductions",
          "ma-dependents",
          "ma-filing-status",
          "ma-tax-year",
          "ma-pay-frequency",
        ].forEach((id) => {
          document
            .getElementById(id)
            .addEventListener("change", calculateMaTax);
          document.getElementById(id).addEventListener("blur", calculateMaTax);
        });

        calculateMaTax();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
