    <script>
      // Utility: format currency EUR
      function formatEuro(value) {
        if (!isFinite(value)) return "€0";
        return new Intl.NumberFormat("en-IT", {
          style: "currency",
          currency: "EUR",
          maximumFractionDigits: 0,
        }).format(value);
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      // Age calculation
      function calculateAge(dobStr) {
        if (!dobStr) return null;
        const dob = new Date(dobStr);
        if (isNaN(dob.getTime())) return null;
        const today = new Date();
        let age = today.getFullYear() - dob.getFullYear();
        const m = today.getMonth() - dob.getMonth();
        if (m < 0 || (m === 0 && today.getDate() < dob.getDate())) {
          age--;
        }
        return age;
      }

      // Transformation coefficient approximation based on age
      function getCoeff(age) {
        // Rough piecewise-linear approximation of INPS coefficients
        if (age <= 60) return 0.042; // 4.2%
        if (age >= 71) return 0.057; // 5.7%
        // interpolate between 60 and 71
        const minAge = 60,
          maxAge = 71;
        const minCoeff = 0.042,
          maxCoeff = 0.057;
        const t = (age - minAge) / (maxAge - minAge);
        return minCoeff + t * (maxCoeff - minCoeff);
      }

      function updateSlidersDisplay() {
        document.getElementById("contribRateVal").textContent =
          document.getElementById("contribRate").value + "%";
        document.getElementById("revalRateVal").textContent =
          document.getElementById("revalRate").value + "%";
        document.getElementById("retAgeVal").textContent =
          document.getElementById("retAge").value;
      }

      function updateAgeDisplay() {
        const dobStr = document.getElementById("dob").value;
        const age = calculateAge(dobStr);
        const el = document.getElementById("age-display");
        if (age === null || age < 0 || age > 120) {
          el.textContent = "Age: –";
        } else {
          el.textContent = "Age: " + age + " years";
        }
      }

      function setEligibilityStatus(el, ok, text) {
        const dot = el.querySelector("span.inline-block");
        const label = el.querySelector("span:last-child");
        label.textContent = text;
        if (ok === null) {
          dot.className = "inline-block w-2 h-2 rounded-full bg-gray-300";
        } else if (ok) {
          dot.className = "inline-block w-2 h-2 rounded-full bg-green-500";
        } else {
          dot.className = "inline-block w-2 h-2 rounded-full bg-red-500";
        }
      }

      function calculatePension() {
        const errorEl = document.getElementById("errorMsg");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        const yearsItaly = parseFloat(
          document.getElementById("yearsItaly").value
        );
        const yearsAbroad =
          parseFloat(document.getElementById("yearsAbroad").value) || 0;
        const avgSalary = parseFloat(
          document.getElementById("avgSalary").value
        );
        const contribRate =
          parseFloat(document.getElementById("contribRate").value) / 100;
        const revalRate =
          parseFloat(document.getElementById("revalRate").value) / 100;
        const retAge = parseInt(document.getElementById("retAge").value, 10);
        const pensionType = document.getElementById("pensionType").value;
        const dobStr = document.getElementById("dob").value;
        const age = calculateAge(dobStr);

        if (!isFinite(yearsItaly) || yearsItaly < 0) {
          errorEl.textContent =
            "Please enter a valid number of contribution years in Italy.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!isFinite(avgSalary) || avgSalary <= 0) {
          errorEl.textContent =
            "Please enter a positive average gross annual salary.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!dobStr || age === null || age < 16) {
          errorEl.textContent = "Please enter a valid date of birth.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (retAge <= age) {
          errorEl.textContent =
            "Planned retirement age must be greater than your current age.";
          errorEl.classList.remove("hidden");
          return;
        }

        // Notional capital approximation
        const annualContribution = avgSalary * contribRate;
        let capital;
        if (revalRate > 0) {
          capital =
            annualContribution *
            ((Math.pow(1 + revalRate, yearsItaly) - 1) / revalRate);
        } else {
          capital = annualContribution * yearsItaly;
        }

        const coeff = getCoeff(retAge);
        let annualPension = capital * coeff;

        // Simple penalty for early retirement type
        if (pensionType === "early") {
          // If retiring before 67, apply a penalty per year
          const yearsEarly = Math.max(0, 67 - retAge);
          const penaltyFactor = 1 - 0.02 * yearsEarly; // 2% per year early
          annualPension *= Math.max(0.7, penaltyFactor); // cap at 30% reduction
        }

        const monthlyPension = annualPension / 13; // 13 payments often used in Italy
        const replacementRate = (annualPension / avgSalary) * 100;

        document.getElementById("annualPension").textContent =
          formatEuro(annualPension);
        document.getElementById("monthlyPension").textContent =
          formatEuro(monthlyPension);
        document.getElementById("replacementRate").textContent =
          formatPercent(replacementRate);

        // Eligibility checks (very simplified)
        const totalYearsForEligibility = yearsItaly + yearsAbroad;

        let minAge = 67;
        let minYears = 20;

        if (pensionType === "early") {
          minAge = 62; // indicative
          minYears = 41; // indicative
        }

        const eligAgeOk = age >= minAge;
        const eligYearsOk = totalYearsForEligibility >= minYears;
        const eligOverall = eligAgeOk && eligYearsOk;

        const eligAgeEl = document.getElementById("eligAge");
        const eligYearsEl = document.getElementById("eligYears");
        const eligTotalEl = document.getElementById("eligTotal");

        setEligibilityStatus(
          eligAgeEl,
          age ? eligAgeOk : null,
          `Minimum age requirement: ${minAge}+ years (you are ${age || "–"})`
        );
        setEligibilityStatus(
          eligYearsEl,
          isFinite(totalYearsForEligibility) ? eligYearsOk : null,
          `Minimum contribution years: ${minYears}+ (you have approx. ${totalYearsForEligibility.toFixed(
            1
          )})`
        );
        setEligibilityStatus(
          eligTotalEl,
          eligOverall,
          eligOverall
            ? "Overall eligibility: likely meets basic thresholds (verify with INPS)."
            : "Overall eligibility: may not meet basic thresholds (check official rules)."
        );
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateSlidersDisplay();
        updateAgeDisplay();

        document
          .getElementById("contribRate")
          .addEventListener("input", updateSlidersDisplay);
        document
          .getElementById("revalRate")
          .addEventListener("input", updateSlidersDisplay);
        document
          .getElementById("retAge")
          .addEventListener("input", updateSlidersDisplay);
        document
          .getElementById("dob")
          .addEventListener("change", updateAgeDisplay);

        document
          .getElementById("calcBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculatePension();
          });
      });
    </script>

