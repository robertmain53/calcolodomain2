    <script>
      // BAI calculator logic
      (function () {
        const sexEl = document.getElementById("bai-sex");
        const ageEl = document.getElementById("bai-age");
        const hipCmEl = document.getElementById("bai-hip-cm");
        const hipInEl = document.getElementById("bai-hip-in");
        const heightMEl = document.getElementById("bai-height-m");
        const heightFtEl = document.getElementById("bai-height-ft");
        const heightInEl = document.getElementById("bai-height-in");

        const hipMetricGroup = document.getElementById("hip-metric-group");
        const hipImperialGroup = document.getElementById("hip-imperial-group");
        const heightMetricGroup = document.getElementById(
          "height-metric-group"
        );
        const heightImperialGroup = document.getElementById(
          "height-imperial-group"
        );

        const baiValueEl = document.getElementById("bai-value");
        const baiCategoryEl = document.getElementById("bai-category");
        const baiInterpretationEl =
          document.getElementById("bai-interpretation");

        const calcBtn = document.getElementById("bai-calc-btn");
        const resetBtn = document.getElementById("bai-reset-btn");

        function getSelectedUnits() {
          const radios = document.querySelectorAll('input[name="bai-units"]');
          for (const r of radios) {
            if (r.checked) return r.value;
          }
          return "metric";
        }

        function toggleUnits() {
          const units = getSelectedUnits();
          if (units === "metric") {
            hipMetricGroup.classList.remove("hidden");
            heightMetricGroup.classList.remove("hidden");
            hipImperialGroup.classList.add("hidden");
            heightImperialGroup.classList.add("hidden");
          } else {
            hipMetricGroup.classList.add("hidden");
            heightMetricGroup.classList.add("hidden");
            hipImperialGroup.classList.remove("hidden");
            heightImperialGroup.classList.remove("hidden");
          }
        }

        function roundTo(value, decimals) {
          const factor = Math.pow(10, decimals);
          return Math.round(value * factor) / factor;
        }

        function classifyBAI(sex, bai) {
          if (isNaN(bai))
            return { category: "–", message: "Unable to classify result." };

          const s = sex === "male" ? "male" : "female";
          let category, message;

          if (s === "male") {
            if (bai < 8) {
              category = "Underfat";
              message =
                "Your BAI is below the suggested normal range for adult men. Very low body fat can be associated with hormonal or nutritional issues in some cases.";
            } else if (bai < 22) {
              category = "Normal";
              message =
                "Your BAI falls within a typical range for adult men. Combine this with other health indicators (waist size, blood pressure, labs) for a fuller picture.";
            } else if (bai < 27) {
              category = "Overweight";
              message =
                "Your BAI is above the suggested normal range. Consider discussing lifestyle, diet, and activity with a healthcare professional.";
            } else {
              category = "Obese";
              message =
                "Your BAI is in a range often associated with increased health risks. A personalized plan with a clinician or dietitian may be helpful.";
            }
          } else {
            if (bai < 21) {
              category = "Underfat";
              message =
                "Your BAI is below the suggested normal range for adult women. Very low body fat can affect hormones and overall health.";
            } else if (bai < 34) {
              category = "Normal";
              message =
                "Your BAI falls within a typical range for adult women. Use this together with other health markers to assess your overall risk.";
            } else if (bai < 39) {
              category = "Overweight";
              message =
                "Your BAI is above the suggested normal range. Small, sustainable changes in diet and activity can improve long‑term health.";
            } else {
              category = "Obese";
              message =
                "Your BAI is in a range often linked to higher cardiometabolic risk. Consider seeking medical advice for a tailored plan.";
            }
          }

          return { category, message };
        }

        function calculateBAI() {
          const sex = sexEl.value || "female";
          const age = parseFloat(ageEl.value);

          if (isNaN(age) || age < 16 || age > 120) {
            alert("Please enter a valid age between 16 and 120 years.");
            return;
          }

          const units = getSelectedUnits();
          let hipCm, heightM;

          if (units === "metric") {
            hipCm = parseFloat(hipCmEl.value);
            heightM = parseFloat(heightMEl.value);
          } else {
            const hipIn = parseFloat(hipInEl.value);
            const ft = parseFloat(heightFtEl.value);
            const inch = parseFloat(heightInEl.value);

            if (!isNaN(hipIn)) {
              hipCm = hipIn * 2.54;
            }
            if (!isNaN(ft) || !isNaN(inch)) {
              const totalIn =
                (isNaN(ft) ? 0 : ft * 12) + (isNaN(inch) ? 0 : inch);
              heightM = totalIn * 0.0254;
            }
          }

          if (!hipCm || hipCm <= 0 || !heightM || heightM <= 0) {
            alert(
              "Please enter valid, positive values for hip circumference and height."
            );
            return;
          }

          if (heightM < 1.2 || heightM > 2.2) {
            if (
              !confirm(
                "The height you entered is outside the typical adult range (1.2–2.2 m). Continue anyway?"
              )
            ) {
              return;
            }
          }

          const heightPow = Math.pow(heightM, 1.5);
          const bai = hipCm / heightPow - 18;
          const baiRounded = roundTo(bai, 1);

          const { category, message } = classifyBAI(sex, baiRounded);

          baiValueEl.textContent = isFinite(baiRounded)
            ? baiRounded.toFixed(1) + " %"
            : "–";
          baiCategoryEl.textContent = category;
          baiInterpretationEl.textContent = message;
        }

        function resetForm() {
          sexEl.value = "female";
          ageEl.value = 30;
          document.querySelector(
            'input[name="bai-units"][value="metric"]'
          ).checked = true;
          toggleUnits();
          hipCmEl.value = 100;
          hipInEl.value = 39.4;
          heightMEl.value = 1.7;
          heightFtEl.value = 5;
          heightInEl.value = 7;

          baiValueEl.textContent = "–";
          baiCategoryEl.textContent = "–";
          baiInterpretationEl.textContent =
            "Enter your data and click “Calculate BAI” to see your estimated body fat and category.";
        }

        document
          .querySelectorAll('input[name="bai-units"]')
          .forEach((radio) => {
            radio.addEventListener("change", toggleUnits);
          });

        calcBtn.addEventListener("click", calculateBAI);
        resetBtn.addEventListener("click", resetForm);

        // Initialize
        toggleUnits();
      })();
    </script>

