    <script>
      // Core PAYE calculator logic (simplified, 2024/25 rest of UK)
      function parseTaxCode(code) {
        if (!code) return 12570; // 1257L
        code = code.toUpperCase().trim();
        const match = code.match(/(\d{3,4})/);
        if (!match) return 12570;
        return parseInt(match[1], 10) * 10;
      }

      function formatMoney(value) {
        return "£" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function calculatePAYE() {
        const grossInput =
          parseFloat(document.getElementById("gross-amount").value) || 0;
        const freq = document.getElementById("pay-frequency").value;
        const taxYear = document.getElementById("tax-year").value;
        const taxCode = document.getElementById("tax-code").value;
        const pensionRate = Math.max(
          0,
          Math.min(
            100,
            parseFloat(document.getElementById("pension-rate").value) || 0
          )
        );
        const studentPlan = document.getElementById("student-loan").value;
        const ageCat = document.getElementById("age-category").value;
        const showEmployer =
          document.getElementById("show-employer-ni").checked;

        if (taxYear !== "2024") {
          // Only one year implemented; placeholder for future years
        }

        // Convert to annual gross
        let annualGross;
        let periodsPerYear;
        switch (freq) {
          case "monthly":
            annualGross = grossInput * 12;
            periodsPerYear = 12;
            break;
          case "weekly":
            annualGross = grossInput * 52;
            periodsPerYear = 52;
            break;
          case "four-weekly":
            annualGross = grossInput * 13;
            periodsPerYear = 13;
            break;
          default:
            annualGross = grossInput;
            periodsPerYear = 1;
        }

        // Pension (salary sacrifice style)
        const annualPension = annualGross * (pensionRate / 100);
        const annualTaxablePay = Math.max(0, annualGross - annualPension);

        // Personal allowance from tax code (no tapering above £100k in this simplified model)
        const personalAllowance = parseTaxCode(taxCode);

        // Income tax bands 2024/25 (rest of UK)
        const basicRateLimit = 50270;
        const higherRateLimit = 125140;

        let taxableAfterPA = Math.max(0, annualTaxablePay - personalAllowance);
        let incomeTax = 0;

        // Basic rate 20%
        const basicBand = Math.max(
          0,
          Math.min(taxableAfterPA, basicRateLimit - personalAllowance)
        );
        incomeTax += basicBand * 0.2;
        taxableAfterPA -= basicBand;

        // Higher rate 40%
        if (taxableAfterPA > 0) {
          const higherBand = Math.max(
            0,
            Math.min(taxableAfterPA, higherRateLimit - basicRateLimit)
          );
          incomeTax += higherBand * 0.4;
          taxableAfterPA -= higherBand;

          // Additional rate 45%
          if (taxableAfterPA > 0) {
            incomeTax += taxableAfterPA * 0.45;
          }
        }

        // Employee NIC (Class 1) simplified 2024/25
        let employeeNIC = 0;
        if (ageCat === "standard") {
          const PT = 12570;
          const UEL = 50270;
          const earningsForNIC = Math.max(0, annualGross - PT);
          if (earningsForNIC > 0) {
            const mainBand = Math.min(earningsForNIC, UEL - PT);
            const upperBand = Math.max(0, earningsForNIC - mainBand);
            employeeNIC = mainBand * 0.08 + upperBand * 0.02;
          }
        }

        // Student loan thresholds (approximate)
        let slThreshold = 0;
        let slRate = 0;
        switch (studentPlan) {
          case "plan1":
            slThreshold = 24990;
            slRate = 0.09;
            break;
          case "plan2":
            slThreshold = 27295;
            slRate = 0.09;
            break;
          case "plan4":
            slThreshold = 31395;
            slRate = 0.09;
            break;
          case "plan5":
            slThreshold = 25000;
            slRate = 0.09;
            break;
          case "postgrad":
            slThreshold = 21000;
            slRate = 0.06;
            break;
          default:
            slThreshold = 0;
            slRate = 0;
        }

        let annualStudentLoan = 0;
        if (slRate > 0) {
          const slIncome = Math.max(0, annualTaxablePay - slThreshold);
          annualStudentLoan = slIncome * slRate;
        }

        // Employer NIC (approximate)
        let employerNIC = 0;
        if (showEmployer) {
          const ST = 9100;
          const earningsForEmpNIC = Math.max(0, annualGross - ST);
          employerNIC = earningsForEmpNIC * 0.138;
        }

        const totalDeductionsAnnual =
          incomeTax + employeeNIC + annualPension + annualStudentLoan;
        const netAnnual = annualGross - totalDeductionsAnnual;

        const grossPerPeriod = annualGross / periodsPerYear;
        const netPerPeriod = netAnnual / periodsPerYear;
        const incomeTaxPerPeriod = incomeTax / periodsPerYear;
        const employeeNICPerPeriod = employeeNIC / periodsPerYear;
        const pensionPerPeriod = annualPension / periodsPerYear;
        const studentLoanPerPeriod = annualStudentLoan / periodsPerYear;
        const employerNICPerPeriod = employerNIC / periodsPerYear;
        const totalEmployerCostPerPeriod =
          (annualGross + employerNIC) / periodsPerYear;

        // Update UI
        const resultsSection = document.getElementById("results-section");
        resultsSection.classList.remove("hidden");

        document.getElementById("net-pay-display").textContent =
          formatMoney(netPerPeriod);
        document.getElementById("total-deductions-display").textContent =
          formatMoney(totalDeductionsAnnual / periodsPerYear);
        document.getElementById("gross-per-period").textContent =
          formatMoney(grossPerPeriod);
        document.getElementById("taxable-pay").textContent = formatMoney(
          annualTaxablePay / periodsPerYear
        );
        document.getElementById("income-tax").textContent =
          formatMoney(incomeTaxPerPeriod);
        document.getElementById("employee-nic").textContent =
          formatMoney(employeeNICPerPeriod);
        document.getElementById("pension-amount").textContent =
          formatMoney(pensionPerPeriod);
        document.getElementById("student-loan-amount").textContent =
          formatMoney(studentLoanPerPeriod);

        const employerCard = document.getElementById("employer-ni-card");
        if (showEmployer) {
          employerCard.classList.remove("hidden");
          document.getElementById("employer-nic").textContent =
            formatMoney(employerNICPerPeriod);
          document.getElementById("total-employer-cost").textContent =
            formatMoney(totalEmployerCostPerPeriod);
        } else {
          employerCard.classList.add("hidden");
        }

        // Period label
        let periodLabel = "";
        switch (freq) {
          case "monthly":
            periodLabel = "per month";
            break;
          case "weekly":
            periodLabel = "per week";
            break;
          case "four-weekly":
            periodLabel = "per 4 weeks";
            break;
          default:
            periodLabel = "per year";
        }
        document.getElementById(
          "net-pay-period"
        ).textContent = `Net pay ${periodLabel}`;
        const effRate =
          annualGross > 0 ? (totalDeductionsAnnual / annualGross) * 100 : 0;
        document.getElementById(
          "effective-tax-rate"
        ).textContent = `Total deductions ≈ ${effRate.toFixed(
          1
        )}% of gross pay`;

        // Annual summary table
        const tbody = document.getElementById("annual-summary-body");
        tbody.innerHTML = "";
        const rows = [
          ["Gross pay", annualGross],
          ["Pension contributions", annualPension],
          ["Taxable pay (after pension)", annualTaxablePay],
          ["Income tax", incomeTax],
          ["Employee NIC", employeeNIC],
          ["Student loan", annualStudentLoan],
          ["Total deductions", totalDeductionsAnnual],
          ["Net take‑home pay", netAnnual],
        ];
        rows.forEach(([label, value]) => {
          const tr = document.createElement("tr");
          const td1 = document.createElement("td");
          const td2 = document.createElement("td");
          td1.className = "px-3 py-2 text-gray-700";
          td2.className = "px-3 py-2 text-right text-gray-900";
          td1.textContent = label;
          td2.textContent = formatMoney(value);
          tr.appendChild(td1);
          tr.appendChild(td2);
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculatePAYE);
        document
          .getElementById("show-employer-ni")
          .addEventListener("change", calculatePAYE);

        [
          "gross-amount",
          "pay-frequency",
          "tax-code",
          "pension-rate",
          "student-loan",
          "age-category",
        ].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("change", calculatePAYE);
          el.addEventListener("input", function () {
            // Debounce-like quick recalc
            clearTimeout(el._payeTimeout);
            el._payeTimeout = setTimeout(calculatePAYE, 300);
          });
        });

        // Initial calculation
        calculatePAYE();
      });
    </script>

