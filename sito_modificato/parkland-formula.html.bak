    <script>
      // Utility: format number with one decimal if needed
      function formatMl(value) {
        if (!isFinite(value)) return "0";
        if (value >= 100) return Math.round(value).toString();
        return value.toFixed(1);
      }

      function updateWeightDisplay() {
        const weightInput = document.getElementById("weight");
        const unitSelect = document.getElementById("weight-unit");
        const display = document.getElementById("weight-kg-display");
        let w = parseFloat(weightInput.value);
        if (!isFinite(w) || w <= 0) {
          display.textContent = "Weight used in formula: –";
          return;
        }
        let kg = unitSelect.value === "kg" ? w : w / 2.20462;
        display.textContent =
          "Weight used in formula: " + kg.toFixed(1) + " kg";
      }

      function getFactor() {
        const factorSelect = document.getElementById("factor");
        const customInput = document.getElementById("factor-custom");
        if (factorSelect.value === "custom") {
          const f = parseFloat(customInput.value);
          return isFinite(f) && f > 0 ? f : NaN;
        }
        return parseFloat(factorSelect.value);
      }

      function calculateParkland() {
        const age = parseFloat(document.getElementById("age").value);
        const weightVal = parseFloat(document.getElementById("weight").value);
        const weightUnit = document.getElementById("weight-unit").value;
        const tbsa = parseFloat(document.getElementById("tbsa").value);
        const hoursSince = parseFloat(
          document.getElementById("hours-since-burn").value
        );
        const maintenance = parseFloat(
          document.getElementById("maintenance-rate").value
        );
        const factor = getFactor();

        let weightKg = NaN;
        if (isFinite(weightVal) && weightVal > 0) {
          weightKg = weightUnit === "kg" ? weightVal : weightVal / 2.20462;
        }

        const total24El = document.getElementById("total-24h");
        const first8El = document.getElementById("first-8h-volume");
        const next16El = document.getElementById("next-16h-volume");
        const remainingFirst8El = document.getElementById("remaining-first-8h");
        const remainingHoursEl = document.getElementById(
          "remaining-hours-first-8h"
        );
        const rateNowEl = document.getElementById("rate-now");
        const rate8to24El = document.getElementById("rate-8to24");
        const startHourLabel = document.getElementById("start-hour-label");
        const maintenanceNote = document.getElementById("maintenance-note");

        // Basic validation
        if (
          !isFinite(weightKg) ||
          weightKg <= 0 ||
          !isFinite(tbsa) ||
          tbsa <= 0 ||
          !isFinite(factor) ||
          factor <= 0
        ) {
          total24El.textContent = "0";
          first8El.textContent = "0";
          next16El.textContent = "0";
          remainingFirst8El.textContent = "0";
          remainingHoursEl.textContent = "0";
          rateNowEl.textContent = "0";
          rate8to24El.textContent = "0";
          startHourLabel.textContent = isFinite(hoursSince) ? hoursSince : "–";
          maintenanceNote.classList.add("hidden");
          return;
        }

        const V24 = factor * weightKg * tbsa; // mL
        const V0_8 = 0.5 * V24;
        const V8_24 = 0.5 * V24;

        let t = isFinite(hoursSince) && hoursSince >= 0 ? hoursSince : 0;
        if (t > 24) t = 24;

        let tLeft = 0;
        let Vremaining0_8 = 0;
        let rateNow = 0;

        if (t >= 8) {
          tLeft = 0;
          Vremaining0_8 = 0;
          rateNow = 0;
        } else {
          tLeft = 8 - t;
          Vremaining0_8 = V0_8; // assuming no prior fluids; user can mentally adjust
          rateNow = tLeft > 0 ? Vremaining0_8 / tLeft : 0;
        }

        const rate8_24 = V8_24 / 16;

        let rateNowTotal = rateNow;
        let rate8_24Total = rate8_24;
        if (isFinite(maintenance) && maintenance > 0) {
          rateNowTotal += maintenance;
          rate8_24Total += maintenance;
          maintenanceNote.classList.remove("hidden");
        } else {
          maintenanceNote.classList.add("hidden");
        }

        total24El.textContent = formatMl(V24);
        first8El.textContent = formatMl(V0_8);
        next16El.textContent = formatMl(V8_24);
        remainingFirst8El.textContent = formatMl(Vremaining0_8);
        remainingHoursEl.textContent = tLeft.toFixed(2);
        rateNowEl.textContent = formatMl(rateNowTotal);
        rate8to24El.textContent = formatMl(rate8_24Total);
        startHourLabel.textContent = t.toFixed(2);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const weightInput = document.getElementById("weight");
        const weightUnit = document.getElementById("weight-unit");
        const factorSelect = document.getElementById("factor");
        const factorCustom = document.getElementById("factor-custom");
        const calcBtn = document.getElementById("calculate-btn");
        const hoursSince = document.getElementById("hours-since-burn");
        const maintenanceInput = document.getElementById("maintenance-rate");
        const tbsaInput = document.getElementById("tbsa");
        const ageInput = document.getElementById("age");
        const ageCategory = document.getElementById("age-category");

        updateWeightDisplay();

        weightInput.addEventListener("input", function () {
          updateWeightDisplay();
        });
        weightUnit.addEventListener("change", function () {
          updateWeightDisplay();
        });

        factorSelect.addEventListener("change", function () {
          if (factorSelect.value === "custom") {
            factorCustom.classList.remove("hidden");
          } else {
            factorCustom.classList.add("hidden");
          }
        });

        calcBtn.addEventListener("click", function (e) {
          e.preventDefault();
          calculateParkland();
        });

        // Auto-recalculate on key changes
        [
          weightInput,
          weightUnit,
          factorSelect,
          factorCustom,
          hoursSince,
          maintenanceInput,
          tbsaInput,
          ageInput,
          ageCategory,
        ].forEach(function (el) {
          el.addEventListener("input", function () {
            if (el === weightInput || el === weightUnit) updateWeightDisplay();
            calculateParkland();
          });
          el.addEventListener("change", function () {
            calculateParkland();
          });
        });

        // Rule of nines toggle
        const ruleBtn = document.getElementById("toggle-rule-of-nines");
        const rulePanel = document.getElementById("rule-of-nines-panel");
        const ruleClose = document.getElementById("close-rule-of-nines");
        ruleBtn.addEventListener("click", function () {
          rulePanel.classList.toggle("hidden");
        });
        ruleClose.addEventListener("click", function () {
          rulePanel.classList.add("hidden");
        });

        // Initial calculation
        calculateParkland();
      });
    </script>

