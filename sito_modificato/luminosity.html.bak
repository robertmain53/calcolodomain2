    <script>
      // Constants
      const L_SUN = 3.828e26; // W
      const R_SUN = 6.957e8; // m
      const SIGMA_SB = 5.670374419e-8; // W m^-2 K^-4
      const PC_TO_M = 3.0856775814913673e16;
      const LY_TO_M = 9.4607304725808e15;

      // Mode switching
      const modeButtons = document.querySelectorAll(".mode-btn");
      const modePanels = document.querySelectorAll(".mode-panel");

      modeButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.dataset.mode;
          modeButtons.forEach((b) => {
            if (b === btn) {
              b.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              b.classList.add(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50",
                "font-medium"
              );
            } else {
              b.classList.add("border-gray-300", "text-gray-700");
              b.classList.remove(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50",
                "font-medium"
              );
            }
          });
          modePanels.forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "mode-" + mode);
          });
        });
      });

      function showError(msg) {
        const el = document.getElementById("errorMsg");
        el.textContent = msg;
        el.classList.remove("hidden");
      }

      function clearError() {
        const el = document.getElementById("errorMsg");
        el.textContent = "";
        el.classList.add("hidden");
      }

      function formatSci(x) {
        if (!isFinite(x) || x === 0) return x.toString();
        const abs = Math.abs(x);
        if (abs >= 1e-3 && abs < 1e4)
          return x.toLocaleString(undefined, { maximumFractionDigits: 6 });
        const exp = Math.floor(Math.log10(abs));
        const mant = x / Math.pow(10, exp);
        return mant.toFixed(3) + " × 10^" + exp;
      }

      function getActiveMode() {
        let active = "mag-distance";
        modeButtons.forEach((btn) => {
          if (btn.classList.contains("border-blue-600"))
            active = btn.dataset.mode;
        });
        return active;
      }

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("luminosity-form").reset();
        document.getElementById("absMagSun").value = 4.83;
        clearError();
        document.getElementById("resultsSection").classList.add("hidden");
      });

      document.getElementById("calcBtn").addEventListener("click", () => {
        clearError();
        const mode = getActiveMode();
        let L = null; // W
        let M = null;

        try {
          if (mode === "mag-distance") {
            const m = parseFloat(document.getElementById("appMag").value);
            const dVal = parseFloat(document.getElementById("distance").value);
            const dUnit = document.getElementById("distanceUnit").value;
            const Msun = parseFloat(document.getElementById("absMagSun").value);

            if (isNaN(m) || isNaN(dVal) || isNaN(Msun)) {
              throw new Error(
                "Please enter apparent magnitude, distance, and Sun’s absolute magnitude."
              );
            }
            if (dVal <= 0) throw new Error("Distance must be positive.");

            // Convert distance to parsecs
            let d_pc;
            if (dUnit === "pc") d_pc = dVal;
            else if (dUnit === "ly") d_pc = dVal * (LY_TO_M / PC_TO_M);
            else if (dUnit === "m") d_pc = dVal / PC_TO_M;
            else d_pc = dVal;

            // Distance modulus
            M = m - 5 * Math.log10(d_pc / 10);

            // Luminosity ratio
            const Lrel = Math.pow(10, 0.4 * (Msun - M));
            L = Lrel * L_SUN;
          } else if (mode === "flux-distance") {
            const F = parseFloat(document.getElementById("flux").value);
            const Funit = document.getElementById("fluxUnit").value;
            const dVal = parseFloat(
              document.getElementById("distanceFlux").value
            );
            const dUnit = document.getElementById("distanceFluxUnit").value;
            const Msun =
              parseFloat(document.getElementById("absMagSun").value) || 4.83;

            if (isNaN(F) || isNaN(dVal)) {
              throw new Error("Please enter flux and distance.");
            }
            if (F <= 0 || dVal <= 0)
              throw new Error("Flux and distance must be positive.");

            let F_Wm2 = F;
            if (Funit === "ergcm2s") {
              F_Wm2 = F * 1e-3; // 1 erg/cm²/s = 1e-3 W/m²
            }

            let d_m;
            if (dUnit === "m") d_m = dVal;
            else if (dUnit === "pc") d_m = dVal * PC_TO_M;
            else if (dUnit === "ly") d_m = dVal * LY_TO_M;
            else d_m = dVal;

            L = 4 * Math.PI * d_m * d_m * F_Wm2;

            // Derive absolute magnitude relative to Sun if possible
            const Lrel = L / L_SUN;
            if (Lrel > 0) {
              M = Msun - 2.5 * Math.log10(Lrel);
            }
          } else if (mode === "radius-temp") {
            const Rval = parseFloat(document.getElementById("radius").value);
            const Runit = document.getElementById("radiusUnit").value;
            const T = parseFloat(document.getElementById("temperature").value);
            const Msun =
              parseFloat(document.getElementById("absMagSun").value) || 4.83;

            if (isNaN(Rval) || isNaN(T)) {
              throw new Error("Please enter radius and temperature.");
            }
            if (Rval <= 0 || T <= 0)
              throw new Error("Radius and temperature must be positive.");

            let R_m;
            if (Runit === "Rsun") R_m = Rval * R_SUN;
            else if (Runit === "m") R_m = Rval;
            else if (Runit === "km") R_m = Rval * 1000;
            else R_m = Rval;

            L = 4 * Math.PI * R_m * R_m * SIGMA_SB * Math.pow(T, 4);

            const Lrel = L / L_SUN;
            if (Lrel > 0) {
              M = Msun - 2.5 * Math.log10(Lrel);
            }
          }

          if (!isFinite(L) || L <= 0) {
            throw new Error(
              "The inputs lead to a non‑physical luminosity. Please check your values."
            );
          }

          const Lrel = L / L_SUN;
          const LabsStr = formatSci(L) + " W";
          const LrelStr = formatSci(Lrel) + " × L\u2299";

          document.getElementById("Lrel").textContent = LrelStr;
          document.getElementById("Labs").textContent = LabsStr;

          if (isFinite(M)) {
            document.getElementById("absMagOut").textContent = M.toFixed(3);
          } else {
            document.getElementById("absMagOut").textContent = "n/a";
          }

          document.getElementById("brightnessRatio").textContent =
            formatSci(Lrel) + " × Sun";

          const bandLabel = document.getElementById("band").value;
          let note =
            "Assuming Sun’s luminosity L\u2299 = " + formatSci(L_SUN) + " W.";
          if (bandLabel === "V") {
            note += " Magnitudes interpreted in Johnson V‑band.";
          } else if (bandLabel === "bolometric") {
            note +=
              " Values are treated as bolometric (total over all wavelengths).";
          } else {
            note +=
              " Custom band selected; ensure Sun’s absolute magnitude matches that band.";
          }
          document.getElementById("notesLine").textContent = note;

          document.getElementById("resultsSection").classList.remove("hidden");
        } catch (e) {
          showError(e.message);
          document.getElementById("resultsSection").classList.add("hidden");
        }
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", (!expanded).toString());
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
