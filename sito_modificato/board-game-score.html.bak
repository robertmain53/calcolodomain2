    <script>
      // Score tracker logic
      (function () {
        const modeRoundsBtn = document.getElementById("mode-rounds");
        const modeCategoriesBtn = document.getElementById("mode-categories");
        const columnLabel = document.getElementById("column-label");
        const addPlayerBtn = document.getElementById("add-player");
        const addColumnBtn = document.getElementById("add-column");
        const removeColumnBtn = document.getElementById("remove-column");
        const scoreBody = document.getElementById("score-body");
        const toggleHighlight = document.getElementById("toggle-highlight");
        const resetTableBtn = document.getElementById("reset-table");
        const copySummaryBtn = document.getElementById("copy-summary");
        const copyStatus = document.getElementById("copy-status");
        const summaryOutput = document.getElementById("summary-output");
        const gameNameInput = document.getElementById("game-name");

        let mode = "rounds"; // 'rounds' or 'categories'
        let columns = []; // { id, name }
        let players = []; // { id, name }

        let playerIdCounter = 1;
        let columnIdCounter = 1;

        function createDefaultColumns() {
          columns = [];
          for (let i = 1; i <= 3; i++) {
            columns.push({
              id: "c" + columnIdCounter++,
              name: mode === "rounds" ? "Round " + i : "Cat " + i,
            });
          }
        }

        function createDefaultPlayers() {
          players = [];
          ["Player 1", "Player 2", "Player 3", "Player 4"].forEach((name) => {
            players.push({ id: "p" + playerIdCounter++, name });
          });
        }

        function renderTable() {
          const theadRow = document.querySelector("#score-table thead tr");
          // Clear existing dynamic headers except first (Player) and last three (Total, Rank, actions)
          while (theadRow.children.length > 4) {
            theadRow.removeChild(theadRow.children[1]);
          }
          // Insert dynamic column headers
          columns.forEach((col, index) => {
            const th = document.createElement("th");
            th.className =
              "px-3 py-2 text-center font-semibold text-gray-700 min-w-[72px]";
            th.dataset.colId = col.id;
            th.textContent = col.name;
            th.title = "Double-click to rename";
            th.addEventListener("dblclick", () => renameColumn(col.id));
            theadRow.insertBefore(
              th,
              theadRow.children[theadRow.children.length - 3]
            );
          });

          // Render body
          scoreBody.innerHTML = "";
          players.forEach((player) => {
            const tr = document.createElement("tr");
            tr.dataset.playerId = player.id;

            // Player name cell
            const nameTd = document.createElement("td");
            nameTd.className = "px-3 py-2 border-t border-gray-100";
            const nameInput = document.createElement("input");
            nameInput.type = "text";
            nameInput.value = player.name;
            nameInput.className =
              "w-full text-sm border border-transparent rounded px-1 py-0.5 focus:outline-none focus:border-blue-400";
            nameInput.addEventListener("input", () => {
              player.name = nameInput.value;
              updateSummary();
            });
            nameTd.appendChild(nameInput);
            tr.appendChild(nameTd);

            // Score cells
            columns.forEach((col) => {
              const td = document.createElement("td");
              td.className = "px-1 py-1 border-t border-gray-100 text-right";
              const input = document.createElement("input");
              input.type = "number";
              input.inputMode = "decimal";
              input.className =
                "score-input w-16 md:w-20 text-right border border-gray-200 rounded px-1 py-0.5 text-sm focus:outline-none focus:ring-1 focus:ring-blue-500";
              input.dataset.playerId = player.id;
              input.dataset.colId = col.id;
              input.addEventListener("input", () => {
                updateTotalsAndRanks();
                updateSummary();
              });
              td.appendChild(input);
              tr.appendChild(td);
            });

            // Total
            const totalTd = document.createElement("td");
            totalTd.className =
              "px-3 py-2 border-t border-gray-100 text-right font-semibold text-gray-800";
            totalTd.dataset.role = "total";
            totalTd.textContent = "0";
            tr.appendChild(totalTd);

            // Rank
            const rankTd = document.createElement("td");
            rankTd.className =
              "px-3 py-2 border-t border-gray-100 text-right text-gray-700";
            rankTd.dataset.role = "rank";
            rankTd.textContent = "-";
            tr.appendChild(rankTd);

            // Remove player
            const removeTd = document.createElement("td");
            removeTd.className =
              "px-2 py-2 border-t border-gray-100 text-center";
            const removeBtn = document.createElement("button");
            removeBtn.type = "button";
            removeBtn.className = "text-xs text-gray-400 hover:text-red-500";
            removeBtn.textContent = "×";
            removeBtn.title = "Remove player";
            removeBtn.addEventListener("click", () => {
              players = players.filter((p) => p.id !== player.id);
              renderTable();
              updateTotalsAndRanks();
              updateSummary();
            });
            removeTd.appendChild(removeBtn);
            tr.appendChild(removeTd);

            scoreBody.appendChild(tr);
          });

          updateTotalsAndRanks();
          updateSummary();
        }

        function renameColumn(colId) {
          const col = columns.find((c) => c.id === colId);
          if (!col) return;
          const current = col.name;
          const label = mode === "rounds" ? "round name" : "category name";
          const name = prompt("Enter " + label + ":", current);
          if (name && name.trim()) {
            col.name = name.trim();
            renderTable();
          }
        }

        function addPlayer() {
          const newName = "Player " + (players.length + 1);
          players.push({ id: "p" + playerIdCounter++, name: newName });
          renderTable();
        }

        function addColumn() {
          const index = columns.length + 1;
          const baseName = mode === "rounds" ? "Round " : "Cat ";
          columns.push({ id: "c" + columnIdCounter++, name: baseName + index });
          renderTable();
        }

        function removeColumn() {
          if (columns.length <= 1) return;
          columns.pop();
          renderTable();
        }

        function updateTotalsAndRanks() {
          const rows = Array.from(scoreBody.querySelectorAll("tr"));
          const results = [];

          rows.forEach((row) => {
            const playerId = row.dataset.playerId;
            let total = 0;
            let hasValue = false;
            columns.forEach((col) => {
              const input = row.querySelector(
                'input[data-col-id="' + col.id + '"]'
              );
              if (input && input.value !== "") {
                const val = parseFloat(input.value);
                if (!isNaN(val)) {
                  total += val;
                  hasValue = true;
                }
              }
            });
            const totalCell = row.querySelector('td[data-role="total"]');
            totalCell.textContent = hasValue ? total.toString() : "0";
            results.push({ playerId, total, row });
          });

          // Sort by total descending
          results.sort((a, b) => b.total - a.total);

          // Assign ranks with ties
          let currentRank = 0;
          let lastTotal = null;
          results.forEach((res, index) => {
            if (lastTotal === null || res.total !== lastTotal) {
              currentRank = index + 1;
              lastTotal = res.total;
            }
            const rankCell = res.row.querySelector('td[data-role="rank"]');
            rankCell.textContent =
              res.total === 0 && !hasAnyScore(res.row) ? "-" : currentRank;
          });

          // Highlight leader
          rows.forEach((r) => r.classList.remove("bg-yellow-50"));
          if (
            toggleHighlight.checked &&
            results.length > 0 &&
            results[0].total !== 0
          ) {
            const topTotal = results[0].total;
            results
              .filter((r) => r.total === topTotal && topTotal !== 0)
              .forEach((r) => r.row.classList.add("bg-yellow-50"));
          }
        }

        function hasAnyScore(row) {
          return columns.some((col) => {
            const input = row.querySelector(
              'input[data-col-id="' + col.id + '"]'
            );
            return input && input.value !== "";
          });
        }

        function resetTable() {
          if (!confirm("Clear all players, scores, and columns?")) return;
          createDefaultColumns();
          createDefaultPlayers();
          renderTable();
          gameNameInput.value = "";
        }

        function buildSummary() {
          const gameName = gameNameInput.value.trim();
          let lines = [];
          if (gameName) {
            lines.push("Game: " + gameName);
          } else {
            lines.push("Game: (not specified)");
          }
          lines.push("Mode: " + (mode === "rounds" ? "Rounds" : "Categories"));

          // Header
          const header = ["Player"];
          columns.forEach((col) => header.push(col.name));
          header.push("Total", "Rank");
          lines.push(header.join(" | "));
          lines.push("-".repeat(header.join(" | ").length));

          // Rows
          const rows = Array.from(scoreBody.querySelectorAll("tr"));
          rows.forEach((row) => {
            const nameInput = row.querySelector("td:first-child input");
            const name = nameInput
              ? nameInput.value.trim() || "(unnamed)"
              : "(unnamed)";
            const cells = [name];
            columns.forEach((col) => {
              const input = row.querySelector(
                'input[data-col-id="' + col.id + '"]'
              );
              cells.push(input && input.value !== "" ? input.value : "0");
            });
            const totalCell = row.querySelector('td[data-role="total"]');
            const rankCell = row.querySelector('td[data-role="rank"]');
            cells.push(totalCell ? totalCell.textContent : "0");
            cells.push(rankCell ? rankCell.textContent : "-");
            lines.push(cells.join(" | "));
          });

          return lines.join("\n");
        }

        function updateSummary() {
          summaryOutput.value = buildSummary();
        }

        function copySummary() {
          if (!navigator.clipboard) {
            summaryOutput.select();
            document.execCommand("copy");
            showCopyStatus();
            return;
          }
          navigator.clipboard
            .writeText(summaryOutput.value)
            .then(showCopyStatus)
            .catch(showCopyStatus);
        }

        function showCopyStatus() {
          copyStatus.classList.remove("hidden");
          setTimeout(() => copyStatus.classList.add("hidden"), 1500);
        }

        // Mode switching
        function setMode(newMode) {
          if (mode === newMode) return;
          mode = newMode;
          if (mode === "rounds") {
            modeRoundsBtn.classList.add(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700"
            );
            modeRoundsBtn.classList.remove("border-gray-300", "text-gray-700");
            modeCategoriesBtn.classList.remove(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700"
            );
            modeCategoriesBtn.classList.add("border-gray-300", "text-gray-700");
            columnLabel.textContent = "Rounds:";
          } else {
            modeCategoriesBtn.classList.add(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700"
            );
            modeCategoriesBtn.classList.remove(
              "border-gray-300",
              "text-gray-700"
            );
            modeRoundsBtn.classList.remove(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700"
            );
            modeRoundsBtn.classList.add("border-gray-300", "text-gray-700");
            columnLabel.textContent = "Categories:";
          }
          // Recreate columns with new default names but same count
          const count = columns.length || 3;
          columns = [];
          for (let i = 1; i <= count; i++) {
            columns.push({
              id: "c" + columnIdCounter++,
              name: (mode === "rounds" ? "Round " : "Cat ") + i,
            });
          }
          renderTable();
        }

        // Event listeners
        modeRoundsBtn.addEventListener("click", () => setMode("rounds"));
        modeCategoriesBtn.addEventListener("click", () =>
          setMode("categories")
        );
        addPlayerBtn.addEventListener("click", addPlayer);
        addColumnBtn.addEventListener("click", addColumn);
        removeColumnBtn.addEventListener("click", removeColumn);
        toggleHighlight.addEventListener("change", updateTotalsAndRanks);
        resetTableBtn.addEventListener("click", resetTable);
        copySummaryBtn.addEventListener("click", copySummary);
        gameNameInput.addEventListener("input", updateSummary);

        // Initialize
        createDefaultColumns();
        createDefaultPlayers();
        renderTable();
      })();
    </script>

