    <script>
      // Tab switching
      const modeTabs = document.querySelectorAll(".mode-tab");
      const modeSections = document.querySelectorAll(".mode-section");
      let currentMode = "molarity";

      modeTabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const mode = tab.getAttribute("data-mode");
          currentMode = mode;
          modeTabs.forEach((t) => {
            t.classList.remove("border-blue-600", "text-blue-600");
            t.classList.add("border-transparent", "text-gray-600");
          });
          tab.classList.add("border-blue-600", "text-blue-600");
          tab.classList.remove("border-transparent", "text-gray-600");

          modeSections.forEach((sec) => sec.classList.add("hidden"));
          document.getElementById("mode-" + mode).classList.remove("hidden");

          document.getElementById("resultsSection").classList.add("hidden");
          document.getElementById("errorMsg").classList.add("hidden");
        });
      });

      function toGrams(value, unit) {
        if (unit === "g") return value;
        if (unit === "mg") return value / 1000;
        if (unit === "ug") return value / 1e6;
        return value;
      }

      function fromGrams(value, unit) {
        if (unit === "g") return value;
        if (unit === "mg") return value * 1000;
        if (unit === "ug") return value * 1e6;
        return value;
      }

      function toLiters(value, unit) {
        if (unit === "L") return value;
        if (unit === "mL") return value / 1000;
        if (unit === "uL") return value / 1e6;
        return value;
      }

      function fromLiters(value, unit) {
        if (unit === "L") return value;
        if (unit === "mL") return value * 1000;
        if (unit === "uL") return value * 1e6;
        return value;
      }

      function toMolar(value, unit) {
        if (unit === "M") return value;
        if (unit === "mM") return value / 1000;
        if (unit === "uM") return value / 1e6;
        return value;
      }

      function fromMolar(value, unit) {
        if (unit === "M") return value;
        if (unit === "mM") return value * 1000;
        if (unit === "uM") return value * 1e6;
        return value;
      }

      function toMoles(value, unit) {
        if (unit === "mol") return value;
        if (unit === "mmol") return value / 1000;
        if (unit === "umol") return value / 1e6;
        return value;
      }

      function fromMoles(value, unit) {
        if (unit === "mol") return value;
        if (unit === "mmol") return value * 1000;
        if (unit === "umol") return value * 1e6;
        return value;
      }

      const calcBtn = document.getElementById("calculateBtn");
      const resetBtn = document.getElementById("resetBtn");
      const errorMsg = document.getElementById("errorMsg");
      const resultsSection = document.getElementById("resultsSection");
      const resultsSummary = document.getElementById("resultsSummary");
      const resultsDetails = document.getElementById("resultsDetails");

      function showError(msg) {
        errorMsg.textContent = msg;
        errorMsg.classList.remove("hidden");
        resultsSection.classList.add("hidden");
      }

      function showResults(summaryHtml, detailsHtml) {
        errorMsg.classList.add("hidden");
        resultsSummary.innerHTML = summaryHtml;
        resultsDetails.innerHTML = detailsHtml || "";
        resultsSection.classList.remove("hidden");
      }

      calcBtn.addEventListener("click", () => {
        try {
          if (currentMode === "molarity") {
            const molarMass = parseFloat(
              document.getElementById("molarMass").value
            );
            const mass = parseFloat(document.getElementById("mass").value);
            const massUnit = document.getElementById("massUnit").value;
            const volume = parseFloat(document.getElementById("volume").value);
            const volumeUnit = document.getElementById("volumeUnit").value;
            const soluteName = document
              .getElementById("soluteName")
              .value.trim();

            if (!molarMass || molarMass <= 0)
              return showError("Please enter a valid molar mass (g/mol).");
            if (!mass || mass <= 0)
              return showError("Please enter a valid solute mass.");
            if (!volume || volume <= 0)
              return showError("Please enter a valid solution volume.");

            const massG = toGrams(mass, massUnit);
            const volL = toLiters(volume, volumeUnit);
            const moles = massG / molarMass;
            const molarity = moles / volL;

            const summary = `<strong>Molarity:</strong> ${molarity.toPrecision(
              4
            )} M`;
            const details = `
          <p><strong>Details</strong></p>
          <ul class="list-disc ml-5">
            <li>Solute: ${soluteName || "—"}</li>
            <li>Mass: ${mass} ${massUnit} = ${massG.toPrecision(4)} g</li>
            <li>Molar mass: ${molarMass} g/mol</li>
            <li>Moles of solute: ${moles.toPrecision(4)} mol</li>
            <li>Volume: ${volume} ${volumeUnit} = ${volL.toPrecision(4)} L</li>
          </ul>
        `;
            showResults(summary, details);
          } else if (currentMode === "mass") {
            const molarMass = parseFloat(
              document.getElementById("molarMass").value
            );
            const conc = parseFloat(
              document.getElementById("concMassMode").value
            );
            const concUnit = document.getElementById("concMassUnit").value;
            const volume = parseFloat(
              document.getElementById("volumeMassMode").value
            );
            const volumeUnit = document.getElementById("volumeMassUnit").value;
            const soluteName = document
              .getElementById("soluteName")
              .value.trim();

            if (!molarMass || molarMass <= 0)
              return showError("Please enter a valid molar mass (g/mol).");
            if (!conc || conc <= 0)
              return showError("Please enter a valid target molarity.");
            if (!volume || volume <= 0)
              return showError("Please enter a valid solution volume.");

            const concM = toMolar(conc, concUnit);
            const volL = toLiters(volume, volumeUnit);
            const moles = concM * volL;
            const massG = moles * molarMass;

            const summary = `<strong>Required mass:</strong> ${massG.toPrecision(
              4
            )} g`;
            const details = `
          <p><strong>Details</strong></p>
          <ul class="list-disc ml-5">
            <li>Solute: ${soluteName || "—"}</li>
            <li>Target concentration: ${conc} ${concUnit} = ${concM.toPrecision(
              4
            )} M</li>
            <li>Volume: ${volume} ${volumeUnit} = ${volL.toPrecision(4)} L</li>
            <li>Moles of solute: ${moles.toPrecision(4)} mol</li>
          </ul>
        `;
            showResults(summary, details);
          } else if (currentMode === "moles") {
            const molesVal = parseFloat(document.getElementById("moles").value);
            const molesUnit = document.getElementById("molesUnit").value;
            const volume = parseFloat(
              document.getElementById("volumeMolesMode").value
            );
            const volumeUnit = document.getElementById("volumeMolesUnit").value;
            const soluteName = document
              .getElementById("soluteName")
              .value.trim();

            if (!molesVal || molesVal <= 0)
              return showError("Please enter a valid amount of moles.");
            if (!volume || volume <= 0)
              return showError("Please enter a valid solution volume.");

            const moles = toMoles(molesVal, molesUnit);
            const volL = toLiters(volume, volumeUnit);
            const molarity = moles / volL;

            const summary = `<strong>Molarity:</strong> ${molarity.toPrecision(
              4
            )} M`;
            const details = `
          <p><strong>Details</strong></p>
          <ul class="list-disc ml-5">
            <li>Solute: ${soluteName || "—"}</li>
            <li>Moles: ${molesVal} ${molesUnit} = ${moles.toPrecision(
              4
            )} mol</li>
            <li>Volume: ${volume} ${volumeUnit} = ${volL.toPrecision(4)} L</li>
          </ul>
        `;
            showResults(summary, details);
          } else if (currentMode === "dilution") {
            const c1Val = document.getElementById("c1").value;
            const c1Unit = document.getElementById("c1Unit").value;
            const v1Val = document.getElementById("v1").value;
            const v1Unit = document.getElementById("v1Unit").value;
            const c2Val = document.getElementById("c2").value;
            const c2Unit = document.getElementById("c2Unit").value;
            const v2Val = document.getElementById("v2").value;
            const v2Unit = document.getElementById("v2Unit").value;

            const fields = [
              { id: "c1", val: c1Val },
              { id: "v1", val: v1Val },
              { id: "c2", val: c2Val },
              { id: "v2", val: v2Val },
            ];
            const emptyCount = fields.filter((f) => f.val === "").length;
            if (emptyCount !== 1) {
              return showError(
                "For dilution, leave exactly one of C₁, V₁, C₂, or V₂ empty."
              );
            }

            let C1 = c1Val === "" ? null : toMolar(parseFloat(c1Val), c1Unit);
            let C2 = c2Val === "" ? null : toMolar(parseFloat(c2Val), c2Unit);
            let V1 = v1Val === "" ? null : toLiters(parseFloat(v1Val), v1Unit);
            let V2 = v2Val === "" ? null : toLiters(parseFloat(v2Val), v2Unit);

            if (
              (C1 !== null && C1 <= 0) ||
              (C2 !== null && C2 <= 0) ||
              (V1 !== null && V1 <= 0) ||
              (V2 !== null && V2 <= 0)
            ) {
              return showError("All provided values must be positive numbers.");
            }

            if (C1 === null) {
              C1 = (C2 * V2) / V1;
            } else if (C2 === null) {
              C2 = (C1 * V1) / V2;
            } else if (V1 === null) {
              V1 = (C2 * V2) / C1;
            } else if (V2 === null) {
              V2 = (C1 * V1) / C2;
            }

            const C1Disp = fromMolar(C1, c1Unit);
            const C2Disp = fromMolar(C2, c2Unit);
            const V1Disp = fromLiters(V1, v1Unit);
            const V2Disp = fromLiters(V2, v2Unit);

            let missingLabel = "";
            if (c1Val === "") missingLabel = "Stock concentration (C₁)";
            else if (c2Val === "") missingLabel = "Final concentration (C₂)";
            else if (v1Val === "") missingLabel = "Stock volume (V₁)";
            else if (v2Val === "") missingLabel = "Final volume (V₂)";

            let summaryVal = "";
            if (c1Val === "") summaryVal = `${C1Disp.toPrecision(4)} ${c1Unit}`;
            else if (c2Val === "")
              summaryVal = `${C2Disp.toPrecision(4)} ${c2Unit}`;
            else if (v1Val === "")
              summaryVal = `${V1Disp.toPrecision(4)} ${v1Unit}`;
            else summaryVal = `${V2Disp.toPrecision(4)} ${v2Unit}`;

            const summary = `<strong>${missingLabel}:</strong> ${summaryVal}`;
            const details = `
          <p><strong>Normalized values (M and L)</strong></p>
          <ul class="list-disc ml-5">
            <li>C₁ = ${C1.toPrecision(4)} M</li>
            <li>V₁ = ${V1.toPrecision(4)} L</li>
            <li>C₂ = ${C2.toPrecision(4)} M</li>
            <li>V₂ = ${V2.toPrecision(4)} L</li>
          </ul>
          <p class="mt-2 text-sm text-gray-600">Based on the dilution equation C₁V₁ = C₂V₂.</p>
        `;
            showResults(summary, details);
          }
        } catch (e) {
          showError("An unexpected error occurred. Please check your inputs.");
        }
      });

      resetBtn.addEventListener("click", () => {
        errorMsg.classList.add("hidden");
        resultsSection.classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
