      function calcMonthlyPayment(principal, annualRate, years) {
        if (principal <= 0 || annualRate <= 0 || years <= 0) return 0;
        const r = annualRate / 100 / 12;
        const n = years * 12;
        return (
          (principal * (r * Math.pow(1 + r, n))) / (Math.pow(1 + r, n) - 1)
        );
      }

