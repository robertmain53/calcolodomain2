        );
        const rSellerOther = document.getElementById("rSellerOther");

        const rSellerCreditSeller = document.getElementById(
          "rSellerCreditSeller"
        );

        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");

        function updateDownPaymentDisplay() {
          const price = parseFloat(purchasePriceEl.value) || 0;
          const downPct = parseFloat(downPctEl.value) || 0;
          const downAmt = (price * downPct) / 100;
          downAmtEl.textContent = formatCurrency(downAmt);
        }

        function syncSliderLabels() {
          buyerPctLabel.textContent = formatPercent(
            parseFloat(buyerPctEl.value)
          );
          lenderFeesLabel.textContent = formatPercent(
            parseFloat(lenderFeesPctEl.value)
          );
          titlePctLabel.textContent = formatPercent(
            parseFloat(titlePctEl.value)
          );
          prepaidsPctLabel.textContent = formatPercent(
            parseFloat(prepaidsPctEl.value)
          );
          sellerPctLabel.textContent = formatPercent(
            parseFloat(sellerPctEl.value)
          );
          commissionPctLabel.textContent = formatPercent(
            parseFloat(commissionPctEl.value)
          );
          sellerTaxesPctLabel.textContent = formatPercent(
            parseFloat(sellerTaxesPctEl.value)
          );
        }

        function adjustForStateAndLoan() {
          const loanType = loanTypeEl.value;
          const state = stateEl.value;

          // Adjust buyer total range based on state
          if (state === "highTax") {
            buyerPctEl.min = 2.5;
            buyerPctEl.max = 6.0;
            if (parseFloat(buyerPctEl.value) < 3.5) buyerPctEl.value = 3.5;
          } else if (state === "lowTax" || state === "noTax") {
            buyerPctEl.min = 1.0;
            buyerPctEl.max = 4.0;
            if (parseFloat(buyerPctEl.value) > 3.5) buyerPctEl.value = 3.0;
          } else {
            buyerPctEl.min = 1.5;
            buyerPctEl.max = 5.0;
          }

          // Adjust prepaids for property type (investment often higher escrows)
          if (propertyTypeEl.value === "investment") {
            if (parseFloat(prepaidsPctEl.value) < 1.2)
              prepaidsPctEl.value = 1.2;
          }

          // Loan-type specific tweaks
          if (loanType === "fha") {
            if (parseFloat(lenderFeesPctEl.value) < 1.0)
              lenderFeesPctEl.value = 1.0;
          } else if (loanType === "va") {
            if (parseFloat(lenderFeesPctEl.value) < 0.9)
              lenderFeesPctEl.value = 0.9;
          } else if (loanType === "cash") {
            lenderFeesPctEl.value = 0.0;
          }

          // Seller transfer taxes higher in high-tax states
          if (state === "highTax") {
            if (parseFloat(sellerTaxesPctEl.value) < 1.2)
              sellerTaxesPctEl.value = 1.2;
          } else if (state === "noTax") {
            sellerTaxesPctEl.value = 0.1;
          }

          syncSliderLabels();
        }

        function compute() {
          const price = Math.max(0, parseFloat(purchasePriceEl.value) || 0);
          const downPct = Math.min(
            100,
            Math.max(0, parseFloat(downPctEl.value) || 0)
          );
          const loanType = loanTypeEl.value;
          const interestRate = Math.max(
            0,
            parseFloat(interestRateEl.value) || 0
          );
          const termYears = parseInt(loanTermEl.value, 10) || 30;
          const payMethod = payMethodEl.value;

          const buyerPct = Math.max(0, parseFloat(buyerPctEl.value) || 0);
          let lenderPct = Math.max(0, parseFloat(lenderFeesPctEl.value) || 0);
          let titlePct = Math.max(0, parseFloat(titlePctEl.value) || 0);
          let prepaidsPct = Math.max(0, parseFloat(prepaidsPctEl.value) || 0);

          // For cash purchases, no lender fees and lower prepaids
          if (loanType === "cash") {
            lenderPct = 0;
            prepaidsPct = Math.min(prepaidsPct, 0.8);
          }

          const sellerPct = Math.max(0, parseFloat(sellerPctEl.value) || 0);
          const commissionPct = Math.max(
            0,
            parseFloat(commissionPctEl.value) || 0
          );
          const sellerTaxesPct = Math.max(
            0,
            parseFloat(sellerTaxesPctEl.value) || 0
          );

          const downAmt = (price * downPct) / 100;
          let baseLoan = loanType === "cash" ? 0 : Math.max(0, price - downAmt);

          // Buyer costs
          const buyerCostsTotal = (price * buyerPct) / 100;
          const lenderFees = (price * lenderPct) / 100;
          const titleFees = (price * titlePct) / 100;
          const prepaids = (price * prepaidsPct) / 100;
          const otherBuyer = Math.max(
            0,
            buyerCostsTotal - lenderFees - titleFees - prepaids
          );

          // Seller costs
          const commission = (price * commissionPct) / 100;
          const sellerTaxes = (price * sellerTaxesPct) / 100;
          const otherSeller = Math.max(
            0,
            (price * sellerPct) / 100 - commission - sellerTaxes
          );

          // Seller credit
          let sellerCredit = 0;
          const creditType = sellerCreditTypeEl.value;
          const creditVal = parseFloat(sellerCreditValueEl.value) || 0;
          if (creditType === "percentPrice") {
            sellerCredit = (price * creditVal) / 100;
          } else if (creditType === "percentCosts") {
            sellerCredit = (buyerCostsTotal * creditVal) / 100;
          } else if (creditType === "flat") {
            sellerCredit = creditVal;
          }
          sellerCredit = Math.min(sellerCredit, buyerCostsTotal); // cannot exceed buyer costs

          // Cash to close
          const buyerCostsAfterCredit = Math.max(
            0,
            buyerCostsTotal - sellerCredit
          );
          let cashToClose = downAmt + buyerCostsAfterCredit;

          // Monthly payments
          const monthlyPIBase = calcMonthlyPayment(
            baseLoan,
            interestRate,
            termYears
          );
          let loanWithCosts = baseLoan;
          if (payMethod === "rollIn" && loanType !== "cash") {
            loanWithCosts += buyerCostsAfterCredit;
          }
          const monthlyPIRollIn = calcMonthlyPayment(
            loanWithCosts,
            interestRate,
            termYears
          );

          // Seller totals
          const sellerCostsTotal =
            commission + sellerTaxes + otherSeller + sellerCredit;
          const netProceeds = price - sellerCostsTotal;

          // Update UI
          rPriceBuyer.textContent = formatCurrency(price);
          rDownBuyer.textContent = `${formatCurrency(
            downAmt
          )} (${downPct.toFixed(1)}%)`;
          rLoanBuyer.textContent = formatCurrency(baseLoan);
          rBuyerCosts.textContent = `${formatCurrency(
            buyerCostsTotal
          )} (${buyerPct.toFixed(1)}%)`;
          rSellerCreditBuyer.textContent =
            sellerCredit > 0 ? "-" + formatCurrency(sellerCredit) : "$0";
          rCashToClose.textContent = formatCurrency(cashToClose);
          rMonthlyPI.textContent = monthlyPIBase
            ? `${formatCurrency(monthlyPIBase)} /mo`
            : "$0 /mo";
          rMonthlyPIRollIn.textContent = monthlyPIRollIn
            ? `${formatCurrency(monthlyPIRollIn)} /mo`
            : "$0 /mo";

          rPriceSeller.textContent = formatCurrency(price);
          rCommission.textContent = `${formatCurrency(
            commission
          )} (${commissionPct.toFixed(1)}%)`;
          rSellerTaxes.textContent = `${formatCurrency(
            sellerTaxes
          )} (${sellerTaxesPct.toFixed(1)}%)`;
          rSellerCosts.textContent = `${formatCurrency(sellerCostsTotal)} (${(
            (sellerCostsTotal / price) * 100 || 0
          ).toFixed(1)}%)`;
          rNetProceeds.textContent = formatCurrency(netProceeds);

          rBuyerLenderFees.textContent = formatCurrency(lenderFees);
          rBuyerTitleFees.textContent = formatCurrency(titleFees);
          rBuyerPrepaids.textContent = formatCurrency(prepaids);
          rBuyerOther.textContent = formatCurrency(otherBuyer);

          rSellerCommission.textContent = formatCurrency(commission);
          rSellerTaxesDetail.textContent = formatCurrency(sellerTaxes);
          rSellerCreditDetail.textContent =
            sellerCredit > 0 ? "-" + formatCurrency(sellerCredit) : "$0";
          rSellerOther.textContent = formatCurrency(otherSeller);

          rSellerCreditSeller.textContent =
            sellerCredit > 0 ? "-" + formatCurrency(sellerCredit) : "$0";
        }

        function resetForm() {
          purchasePriceEl.value = 400000;
          downPctEl.value = 10;
          loanTypeEl.value = "conventional";
          stateEl.value = "generic";
          propertyTypeEl.value = "primary";
          interestRateEl.value = 6.75;
          loanTermEl.value = 30;
          payMethodEl.value = "cash";

          buyerPctEl.value = 3.0;
          lenderFeesPctEl.value = 0.8;
          titlePctEl.value = 0.7;
          prepaidsPctEl.value = 1.5;

          sellerPctEl.value = 8.0;
          commissionPctEl.value = 6.0;
          sellerTaxesPctEl.value = 1.0;

          sellerCreditTypeEl.value = "none";
          sellerCreditValueEl.value = 3;
          sellerCreditValueWrapper.classList.add("hidden");

          updateDownPaymentDisplay();
          adjustForStateAndLoan();
          compute();
        }

        // Event listeners
        [purchasePriceEl, downPctEl].forEach((el) => {
          el.addEventListener("input", () => {
            updateDownPaymentDisplay();
          });
          el.addEventListener("change", () => {
            updateDownPaymentDisplay();
            compute();
          });
        });

        [loanTypeEl, stateEl, propertyTypeEl].forEach((el) => {
          el.addEventListener("change", () => {
            adjustForStateAndLoan();
            compute();
          });
        });

        [interestRateEl, loanTermEl, payMethodEl].forEach((el) => {
          el.addEventListener("change", compute);
          el.addEventListener("input", compute);
        });

        [
          buyerPctEl,
          lenderFeesPctEl,
          titlePctEl,
          prepaidsPctEl,
          sellerPctEl,
          commissionPctEl,
          sellerTaxesPctEl,
        ].forEach((el) => {
          el.addEventListener("input", () => {
            syncSliderLabels();
            compute();
          });
        });

        sellerCreditTypeEl.addEventListener("change", () => {
          const type = sellerCreditTypeEl.value;
          if (type === "none") {
            sellerCreditValueWrapper.classList.add("hidden");
          } else {
            sellerCreditValueWrapper.classList.remove("hidden");
            if (type === "flat") {
              sellerCreditSuffix.textContent = "$";
              sellerCreditValueEl.step = 500;
              sellerCreditValueEl.value = 5000;
            } else {
              sellerCreditSuffix.textContent = "%";
              sellerCreditValueEl.step = 0.1;
              sellerCreditValueEl.value = 3;
            }
          }
          compute();
        });

        sellerCreditValueEl.addEventListener("input", compute);
        calculateBtn.addEventListener("click", compute);
        resetBtn.addEventListener("click", resetForm);

        // Initial setup
        updateDownPaymentDisplay();
        syncSliderLabels();
        compute();
      });
    </script>

