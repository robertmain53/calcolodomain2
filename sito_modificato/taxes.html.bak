    <script>
      // Tab switching
      const tabs = document.querySelectorAll(".tax-tab");
      const panels = document.querySelectorAll(".tax-panel");

      tabs.forEach((tab) => {
        tab.addEventListener("click", () => {
          const target = tab.getAttribute("data-tab");
          tabs.forEach((t) => {
            t.classList.remove("border-blue-600", "text-blue-600");
            t.classList.add("border-transparent", "text-gray-600");
          });
          tab.classList.add("border-blue-600", "text-blue-600");
          tab.classList.remove("border-transparent", "text-gray-600");

          panels.forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "tab-" + target);
          });
        });
      });

      // Income tax calculation
      function formatMoney(v) {
        if (isNaN(v)) return "$0";
        return "$" + v.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }
      function formatPercent(v) {
        if (isNaN(v)) return "0%";
        return v.toFixed(2).replace(/\.00$/, "") + "%";
      }

      function calcIncomeTax(amount) {
        const brackets = [
          { upTo: 10000, rate: 0.0 },
          { upTo: 40000, rate: 0.1 },
          { upTo: 100000, rate: 0.2 },
          { upTo: Infinity, rate: 0.3 },
        ];
        let remaining = amount;
        let lastLimit = 0;
        let tax = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const taxableSlice = Math.min(remaining, b.upTo - lastLimit);
          tax += taxableSlice * b.rate;
          remaining -= taxableSlice;
          lastLimit = b.upTo;
        }
        return Math.max(0, tax);
      }

      document
        .getElementById("income-calc-btn")
        .addEventListener("click", () => {
          const income =
            parseFloat(document.getElementById("income-amount").value) || 0;
          const tax = calcIncomeTax(income);
          const effective = income > 0 ? (tax / income) * 100 : 0;
          const afterTax = income - tax;

          document.getElementById("income-tax-total").textContent =
            formatMoney(tax);
          document.getElementById("income-tax-effective").textContent =
            formatPercent(effective);
          document.getElementById("income-after-tax").textContent =
            formatMoney(afterTax);
        });

      // Sales tax
      document
        .getElementById("sales-calc-btn")
        .addEventListener("click", () => {
          const price =
            parseFloat(document.getElementById("sales-price").value) || 0;
          const rate =
            parseFloat(document.getElementById("sales-rate").value) || 0;
          const tax = price * (rate / 100);
          const total = price + tax;
          const eff = total > 0 ? (tax / total) * 100 : 0;

          document.getElementById("sales-tax-amount").textContent =
            formatMoney(tax);
          document.getElementById("sales-total").textContent =
            formatMoney(total);
          document.getElementById("sales-effective-rate").textContent =
            formatPercent(eff);
        });

      // Payroll
      document
        .getElementById("payroll-calc-btn")
        .addEventListener("click", () => {
          const gross =
            parseFloat(document.getElementById("payroll-gross").value) || 0;
          const freq =
            parseFloat(document.getElementById("payroll-frequency").value) || 1;
          const incomeRate =
            parseFloat(document.getElementById("payroll-income-rate").value) ||
            0;
          const socialRate =
            parseFloat(document.getElementById("payroll-social-rate").value) ||
            0;
          const otherRate =
            parseFloat(document.getElementById("payroll-other-rate").value) ||
            0;

          const totalRate = (incomeRate + socialRate + otherRate) / 100;
          const deductions = gross * totalRate;
          const net = gross - deductions;
          const annualNet = net * freq;

          document.getElementById("payroll-total-deductions").textContent =
            formatMoney(deductions);
          document.getElementById("payroll-net").textContent = formatMoney(net);
          document.getElementById("payroll-annual-net").textContent =
            formatMoney(annualNet);
          document.getElementById("payroll-effective-rate").textContent =
            formatPercent(totalRate * 100);
        });

      // Self-employment
      document
        .getElementById("selfemp-calc-btn")
        .addEventListener("click", () => {
          const income =
            parseFloat(document.getElementById("selfemp-income").value) || 0;
          const rate =
            parseFloat(document.getElementById("selfemp-rate").value) || 0;
          const tax = income * (rate / 100);
          const afterTax = income - tax;
          const eff = income > 0 ? (tax / income) * 100 : 0;

          document.getElementById("selfemp-tax").textContent = formatMoney(tax);
          document.getElementById("selfemp-after-tax").textContent =
            formatMoney(afterTax);
          document.getElementById("selfemp-effective-rate").textContent =
            formatPercent(eff);
        });

      // Property tax
      document
        .getElementById("property-calc-btn")
        .addEventListener("click", () => {
          const value =
            parseFloat(document.getElementById("property-value").value) || 0;
          const rate =
            parseFloat(document.getElementById("property-rate").value) || 0;
          const annual = value * (rate / 100);
          const monthly = annual / 12;
          const eff = value > 0 ? (annual / value) * 100 : 0;

          document.getElementById("property-tax-annual").textContent =
            formatMoney(annual);
          document.getElementById("property-tax-monthly").textContent =
            formatMoney(monthly);
          document.getElementById("property-effective-rate").textContent =
            formatPercent(eff);
        });

      // FAQ toggle (simple, in addition to global script_faq if present)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              symbol.textContent = "−";
            }
          });
        });

      // Initial auto-calculation for default values
      document.getElementById("income-calc-btn").click();
      document.getElementById("sales-calc-btn").click();
      document.getElementById("payroll-calc-btn").click();
      document.getElementById("selfemp-calc-btn").click();
      document.getElementById("property-calc-btn").click();
    </script>
  
