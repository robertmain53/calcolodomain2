    <script>
      const shapeSelect = document.getElementById('shape');
      const dimensionFields = document.getElementById('dimension-fields');
      const shapeOptions = document.getElementById('shape-options');
      const calcBtn = document.getElementById('calc-btn');
      const resetBtn = document.getElementById('reset-btn');
      const unitSelect = document.getElementById('unit');
      const precisionSelect = document.getElementById('precision');
      const resultPanel = document.getElementById('result-panel');
      const resArea = document.getElementById('res-area');
      const resFormula = document.getElementById('res-formula');

      function renderFields(shape) {
        shapeOptions.classList.add('hidden');
        shapeOptions.innerHTML = '';

        if (shape === 'cube') {
          dimensionFields.innerHTML = `
            <div>
              <label for="edge" class="block text-sm font-medium text-gray-700 mb-1">Edge length</label>
              <input type="number" id="edge" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
          `;
        } else if (shape === 'rectangular-prism') {
          dimensionFields.innerHTML = `
            <div>
              <label for="length" class="block text-sm font-medium text-gray-700 mb-1">Length (l)</label>
              <input type="number" id="length" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 6" min="0" step="any">
            </div>
            <div>
              <label for="width" class="block text-sm font-medium text-gray-700 mb-1">Width (w)</label>
              <input type="number" id="width" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
          `;
        } else if (shape === 'sphere') {
          dimensionFields.innerHTML = `
            <div>
              <label for="radius" class="block text-sm font-medium text-gray-700 mb-1">Radius (r)</label>
              <input type="number" id="radius" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 2.5" min="0" step="any">
            </div>
          `;
        } else if (shape === 'cylinder') {
          dimensionFields.innerHTML = `
            <div>
              <label for="radius" class="block text-sm font-medium text-gray-700 mb-1">Radius (r)</label>
              <input type="number" id="radius" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 10" min="0" step="any">
            </div>
          `;
          shapeOptions.classList.remove('hidden');
          shapeOptions.innerHTML = `
            <label for="cyl-mode" class="block text-sm font-medium text-gray-700 mb-1">Cylinder type</label>
            <select id="cyl-mode" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500">
              <option value="closed" selected>Closed (top + bottom)</option>
              <option value="open-top">Open-top</option>
              <option value="lateral">Lateral area only</option>
            </select>
          `;
        } else if (shape === 'cone') {
          dimensionFields.innerHTML = `
            <div>
              <label for="radius" class="block text-sm font-medium text-gray-700 mb-1">Radius (r)</label>
              <input type="number" id="radius" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 7" min="0" step="any">
            </div>
          `;
        } else if (shape === 'square-pyramid') {
          dimensionFields.innerHTML = `
            <div>
              <label for="base" class="block text-sm font-medium text-gray-700 mb-1">Base side (a)</label>
              <input type="number" id="base" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 5" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Vertical height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 8" min="0" step="any">
            </div>
          `;
        } else if (shape === 'triangular-prism') {
          dimensionFields.innerHTML = `
            <p class="text-sm text-gray-600">Right triangular prism: triangle legs a &amp; b, prism length L.</p>
            <div>
              <label for="tri-a" class="block text-sm font-medium text-gray-700 mb-1">Triangle leg a</label>
              <input type="number" id="tri-a" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
            <div>
              <label for="tri-b" class="block text-sm font-medium text-gray-700 mb-1">Triangle leg b</label>
              <input type="number" id="tri-b" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
            <div>
              <label for="tri-l" class="block text-sm font-medium text-gray-700 mb-1">Prism length (L)</label>
              <input type="number" id="tri-l" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 10" min="0" step="any">
            </div>
          `;
        }
      }

      shapeSelect.addEventListener('change', (e) => {
        renderFields(e.target.value);
        resultPanel.classList.add('hidden');
      });

      function calculateSurfaceArea() {
        const shape = shapeSelect.value;
        const unit = unitSelect.value;
        const prec = parseInt(precisionSelect.value, 10);
        let sa = null;
        let formula = '';

        if (shape === 'cube') {
          const a = parseFloat(document.getElementById('edge')?.value);
          if (isNaN(a) || a <= 0) return null;
          sa = 6 * Math.pow(a, 2);
          formula = 'SA = 6a²';
        } else if (shape === 'rectangular-prism') {
          const l = parseFloat(document.getElementById('length')?.value);
          const w = parseFloat(document.getElementById('width')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          if ([l, w, h].some(v => isNaN(v) || v <= 0)) return null;
          sa = 2 * (l*w + l*h + w*h);
          formula = 'SA = 2(lw + lh + wh)';
        } else if (shape === 'sphere') {
          const r = parseFloat(document.getElementById('radius')?.value);
          if (isNaN(r) || r <= 0) return null;
          sa = 4 * Math.PI * Math.pow(r, 2);
          formula = 'SA = 4πr²';
        } else if (shape === 'cylinder') {
          const r = parseFloat(document.getElementById('radius')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          const mode = document.getElementById('cyl-mode')?.value || 'closed';
          if ([r, h].some(v => isNaN(v) || v <= 0)) return null;
          const lateral = 2 * Math.PI * r * h;
          const base = Math.PI * Math.pow(r, 2);
          if (mode === 'closed') {
            sa = lateral + 2 * base;
            formula = 'SA = 2πr² + 2πrh';
          } else if (mode === 'open-top') {
            sa = lateral + base;
            formula = 'SA = πr² + 2πrh';
          } else {
            sa = lateral;
            formula = 'SA = 2πrh';
          }
        } else if (shape === 'cone') {
          const r = parseFloat(document.getElementById('radius')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          if ([r, h].some(v => isNaN(v) || v <= 0)) return null;
          const s = Math.sqrt(r*r + h*h);
          sa = Math.PI * r * (r + s);
          formula = 'SA = πr(r + √(r² + h²))';
        } else if (shape === 'square-pyramid') {
          const a = parseFloat(document.getElementById('base')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          if ([a, h].some(v => isNaN(v) || v <= 0)) return null;
          const slant = Math.sqrt(Math.pow(a/2, 2) + Math.pow(h, 2));
          sa = a*a + 2 * a * slant;
          formula = 'SA = a² + 2a√((a/2)² + h²)';
        } else if (shape === 'triangular-prism') {
          const a = parseFloat(document.getElementById('tri-a')?.value);
          const b = parseFloat(document.getElementById('tri-b')?.value);
          const L = parseFloat(document.getElementById('tri-l')?.value);
          if ([a, b, L].some(v => isNaN(v) || v <= 0)) return null;
          const c = Math.sqrt(a*a + b*b);
          sa = (a * b) + (a + b + c) * L; // ab + (a+b+c)L
          formula = 'SA = ab + (a + b + √(a² + b²))L';
        }

        return { sa, unit, prec, formula };
      }

      calcBtn.addEventListener('click', () => {
        const res = calculateSurfaceArea();
        if (!res) {
          resultPanel.classList.remove('hidden');
          resArea.textContent = 'Enter valid positive dimensions.';
          resFormula.textContent = '';
          return;
        }
        const { sa, unit, prec, formula } = res;
        resultPanel.classList.remove('hidden');
        resArea.textContent = `${sa.toLocaleString(undefined, { maximumFractionDigits: prec })} ${unit}²`;
        resFormula.textContent = formula;
      });

      resetBtn.addEventListener('click', () => {
        shapeSelect.value = 'cube';
        unitSelect.value = 'm';
        precisionSelect.value = '2';
        renderFields('cube');
        resultPanel.classList.add('hidden');
      });

      // init
      renderFields('cube');

      // FAQ fallback toggle
      document.querySelectorAll('[data-faq-btn]').forEach(btn => {
        btn.addEventListener('click', () => {
          const panel = btn.parentElement.querySelector('[data-faq-panel]');
          panel.classList.toggle('hidden');
        });
      });
    </script>

