    <script>
      // Utility: convert any length to meters
      function toMeters(value, unit) {
        const v = Number(value);
        if (!isFinite(v)) return NaN;
        switch (unit) {
          case "mm":
            return v / 1000;
          case "cm":
            return v / 100;
          case "m":
            return v;
          case "in":
            return v * 0.0254;
          case "ft":
            return v * 0.3048;
          default:
            return NaN;
        }
      }

      function formatNumber(num, decimals = 4) {
        if (!isFinite(num)) return "–";
        if (Math.abs(num) >= 1e5 || (Math.abs(num) < 1e-3 && num !== 0)) {
          return num.toExponential(3);
        }
        return num.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: 0,
        });
      }

      function syncUnitsWithSystem() {
        const system = document.getElementById("unit-system").value;
        const metricDefault = "cm";
        const imperialDefault = "in";
        const metricUnits = ["mm", "cm", "m"];
        const imperialUnits = ["in", "ft"];

        ["radius-top-unit", "radius-bottom-unit", "height-unit"].forEach(
          (id) => {
            const select = document.getElementById(id);
            const current = select.value;
            select.innerHTML = "";
            const units = system === "metric" ? metricUnits : imperialUnits;
            units.forEach((u) => {
              const opt = document.createElement("option");
              opt.value = u;
              opt.textContent = u;
              select.appendChild(opt);
            });
            // Try to preserve if compatible, else default
            if (units.includes(current)) {
              select.value = current;
            } else {
              select.value =
                system === "metric" ? metricDefault : imperialDefault;
            }
          }
        );
      }

      document
        .getElementById("unit-system")
        .addEventListener("change", syncUnitsWithSystem);

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const r1Val = document.getElementById("radius-top").value;
        const r2Val = document.getElementById("radius-bottom").value;
        const hVal = document.getElementById("height").value;

        const r1Unit = document.getElementById("radius-top-unit").value;
        const r2Unit = document.getElementById("radius-bottom-unit").value;
        const hUnit = document.getElementById("height-unit").value;

        const errorEl = document.getElementById("error-message");
        const showSteps = document.getElementById("show-steps-toggle").checked;
        const stepsCard = document.getElementById("steps-card");
        const stepsContent = document.getElementById("steps-content");

        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        if (r1Val === "" || r2Val === "" || hVal === "") {
          errorEl.textContent =
            "Please enter all three dimensions (both radii and height).";
          errorEl.classList.remove("hidden");
          stepsCard.classList.add("hidden");
          return;
        }

        const r1m = toMeters(r1Val, r1Unit);
        const r2m = toMeters(r2Val, r2Unit);
        const hm = toMeters(hVal, hUnit);

        if (!isFinite(r1m) || !isFinite(r2m) || !isFinite(hm)) {
          errorEl.textContent =
            "One or more inputs are invalid. Please check your values.";
          errorEl.classList.remove("hidden");
          stepsCard.classList.add("hidden");
          return;
        }

        if (r1m < 0 || r2m < 0 || hm <= 0) {
          errorEl.textContent =
            "Radii must be non-negative and height must be greater than zero.";
          errorEl.classList.remove("hidden");
          stepsCard.classList.add("hidden");
          return;
        }

        // Volume in m^3
        const volume = (Math.PI * hm * (r1m * r1m + r1m * r2m + r2m * r2m)) / 3;

        // Slant height in m
        const slant = Math.sqrt((r2m - r1m) * (r2m - r1m) + hm * hm);

        // Lateral area in m^2
        const lateralArea = Math.PI * (r1m + r2m) * slant;

        // Total area in m^2
        const totalArea =
          lateralArea + Math.PI * r1m * r1m + Math.PI * r2m * r2m;

        const system = document.getElementById("unit-system").value;
        let lengthUnit, areaUnit, volumeUnit;

        if (system === "metric") {
          // Convert back to cm-based outputs for readability
          lengthUnit = "cm";
          areaUnit = "cm²";
          volumeUnit = "cm³";

          const factorL = 100; // m -> cm
          const factorA = 10000; // m² -> cm²
          const factorV = 1e6; // m³ -> cm³

          document.getElementById("result-slant-height").textContent =
            formatNumber(slant * factorL, 3) + " " + lengthUnit;
          document.getElementById("result-lateral-area").textContent =
            formatNumber(lateralArea * factorA, 3) + " " + areaUnit;
          document.getElementById("result-total-area").textContent =
            formatNumber(totalArea * factorA, 3) + " " + areaUnit;
          document.getElementById("result-volume").textContent =
            formatNumber(volume * factorV, 3) + " " + volumeUnit;
        } else {
          // Imperial: output in inches
          lengthUnit = "in";
          areaUnit = "in²";
          volumeUnit = "in³";

          const mToIn = 39.3700787402;
          const m2ToIn2 = mToIn * mToIn;
          const m3ToIn3 = m2ToIn2 * mToIn;

          document.getElementById("result-slant-height").textContent =
            formatNumber(slant * mToIn, 3) + " " + lengthUnit;
          document.getElementById("result-lateral-area").textContent =
            formatNumber(lateralArea * m2ToIn2, 3) + " " + areaUnit;
          document.getElementById("result-total-area").textContent =
            formatNumber(totalArea * m2ToIn2, 3) + " " + areaUnit;
          document.getElementById("result-volume").textContent =
            formatNumber(volume * m3ToIn3, 3) + " " + volumeUnit;
        }

        if (showSteps) {
          const r1 = Number(r1Val);
          const r2 = Number(r2Val);
          const h = Number(hVal);
          const pi = Math.PI;

          const r1sq = r1 * r1;
          const r2sq = r2 * r2;
          const r1r2 = r1 * r2;
          const sumTerm = r1sq + r1r2 + r2sq;

          const slantLocal = Math.sqrt((r2 - r1) * (r2 - r1) + h * h);
          const lateralLocal = pi * (r1 + r2) * slantLocal;
          const totalLocal = lateralLocal + pi * r1sq + pi * r2sq;
          const volumeLocal = (pi * h * sumTerm) / 3;

          stepsContent.innerHTML = `
        <p><strong>1. Convert all dimensions to a consistent unit</strong><br>
        Using your chosen units: r₁ = ${formatNumber(
          r1
        )} ${r1Unit}, r₂ = ${formatNumber(r2)} ${r2Unit}, h = ${formatNumber(
            h
          )} ${hUnit}.</p>
        <p><strong>2. Compute slant height</strong><br>
        s = √((r₂ − r₁)² + h²) = √((${formatNumber(r2)} − ${formatNumber(
            r1
          )})² + ${formatNumber(h)}²) ≈ ${formatNumber(
            slantLocal,
            4
          )} ${hUnit}</p>
        <p><strong>3. Volume</strong><br>
        V = (1/3)·π·h·(r₁² + r₁r₂ + r₂²)<br>
        = (1/3)·π·${formatNumber(h)}·(${formatNumber(r1sq)} + ${formatNumber(
            r1r2
          )} + ${formatNumber(r2sq)})<br>
        = (1/3)·π·${formatNumber(h)}·${formatNumber(sumTerm)} ≈ ${formatNumber(
            volumeLocal,
            4
          )} ${hUnit}³</p>
        <p><strong>4. Lateral surface area</strong><br>
        A<sub>L</sub> = π·(r₁ + r₂)·s = π·(${formatNumber(r1)} + ${formatNumber(
            r2
          )})·${formatNumber(slantLocal, 4)} ≈ ${formatNumber(
            lateralLocal,
            4
          )} ${hUnit}²</p>
        <p><strong>5. Total surface area</strong><br>
        A<sub>T</sub> = A<sub>L</sub> + πr₁² + πr₂² ≈ ${formatNumber(
          totalLocal,
          4
        )} ${hUnit}²</p>
      `;
          stepsCard.classList.remove("hidden");
        } else {
          stepsCard.classList.add("hidden");
        }
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        ["radius-top", "radius-bottom", "height"].forEach((id) => {
          document.getElementById(id).value = "";
        });
        document.getElementById("error-message").classList.add("hidden");
        document.getElementById("error-message").textContent = "";
        document.getElementById("result-volume").textContent = "–";
        document.getElementById("result-lateral-area").textContent = "–";
        document.getElementById("result-total-area").textContent = "–";
        document.getElementById("result-slant-height").textContent = "–";
        document.getElementById("steps-card").classList.add("hidden");
      });

      // Initialize units on load
      syncUnitsWithSystem();
    </script>

