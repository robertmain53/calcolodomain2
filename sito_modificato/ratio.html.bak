    <script>
      (function () {
        // Mobile menu toggle
        const mobileToggle = document.getElementById("mobile-menu-toggle");
        const mobileMenu = document.getElementById("mobile-menu");
        if (mobileToggle && mobileMenu) {
          mobileToggle.addEventListener("click", () => {
            const isHidden = mobileMenu.classList.contains("hidden");
            mobileMenu.classList.toggle("hidden", !isHidden);
            mobileToggle.setAttribute(
              "aria-expanded",
              isHidden ? "true" : "false"
            );
          });
        }

        function toNumber(raw) {
          if (typeof raw !== "string") return NaN;
          if (!raw.trim()) return NaN;
          const norm = raw.replace(",", ".");
          return Number(norm);
        }

        function countDecimalsFromString(raw) {
          const norm = raw.replace(",", ".");
          const parts = norm.split(".");
          if (parts.length === 2) {
            return parts[1].replace(/[^0-9]/g, "").length;
          }
          return 0;
        }

        function gcdInt(a, b) {
          a = Math.abs(a);
          b = Math.abs(b);
          if (a === 0) return b || 1;
          if (b === 0) return a || 1;
          while (b !== 0) {
            const t = b;
            b = a % b;
            a = t;
          }
          return a || 1;
        }

        // --------- Simplify ratio ----------
        const simplifyA = document.getElementById("simplify-a");
        const simplifyB = document.getElementById("simplify-b");
        const btnSimplify = document.getElementById("btn-simplify");
        const simplifyError = document.getElementById("simplify-error");
        const simplifyResult = document.getElementById("simplify-result");
        const simplifySteps = document.getElementById("simplify-steps");

        function clearSimplifyError() {
          simplifyError.textContent = "";
          simplifyError.classList.add("hidden");
        }
        function showSimplifyError(msg) {
          simplifyError.textContent = msg;
          simplifyError.classList.remove("hidden");
        }

        function handleSimplify() {
          clearSimplifyError();
          simplifyResult.textContent = "—";
          simplifySteps.textContent =
            "GCD steps will appear here after a calculation.";

          const rawA = simplifyA.value.trim();
          const rawB = simplifyB.value.trim();

          const aNum = toNumber(rawA);
          const bNum = toNumber(rawB);

          if (!isFinite(aNum) || isNaN(aNum)) {
            showSimplifyError(
              "Please enter a valid number for the first term a."
            );
            return;
          }
          if (!isFinite(bNum) || isNaN(bNum)) {
            showSimplifyError(
              "Please enter a valid number for the second term b."
            );
            return;
          }
          if (aNum === 0 && bNum === 0) {
            showSimplifyError(
              "At least one term in the ratio must be non-zero."
            );
            return;
          }

          const decA = countDecimalsFromString(rawA);
          const decB = countDecimalsFromString(rawB);
          const scalePow = Math.max(decA, decB);
          if (scalePow > 6) {
            showSimplifyError(
              "Please limit decimal inputs to at most 6 decimal places to keep the GCD calculation stable."
            );
            return;
          }
          const factor = Math.pow(10, scalePow);
          const intA = Math.round(aNum * factor);
          const intB = Math.round(bNum * factor);

          const g = gcdInt(intA, intB);
          const simpA = intA / g;
          const simpB = intB / g;

          simplifyResult.textContent = simpA + " : " + simpB;
          simplifySteps.textContent =
            "Converted to integers " +
            intA +
            " and " +
            intB +
            ", GCD = " +
            g +
            ", so the simplified ratio is (" +
            intA +
            " ÷ " +
            g +
            ") : (" +
            intB +
            " ÷ " +
            g +
            ") = " +
            simpA +
            " : " +
            simpB +
            ".";
        }

        btnSimplify.addEventListener("click", handleSimplify);
        [simplifyA, simplifyB].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              handleSimplify();
            }
          });
        });

        // --------- Scale ratio ----------
        const scaleA = document.getElementById("scale-a");
        const scaleB = document.getElementById("scale-b");
        const scaleTotal = document.getElementById("scale-total");
        const btnScale = document.getElementById("btn-scale");
        const scaleError = document.getElementById("scale-error");
        const scaleARes = document.getElementById("scale-A");
        const scaleBRes = document.getElementById("scale-B");
        const scaleSteps = document.getElementById("scale-steps");

        function clearScaleError() {
          scaleError.textContent = "";
          scaleError.classList.add("hidden");
        }
        function showScaleError(msg) {
          scaleError.textContent = msg;
          scaleError.classList.remove("hidden");
        }

        function handleScale() {
          clearScaleError();
          scaleARes.textContent = "—";
          scaleBRes.textContent = "—";
          scaleSteps.textContent =
            "Explanation will appear here after a calculation.";

          const rawA = scaleA.value.trim();
          const rawB = scaleB.value.trim();
          const rawT = scaleTotal.value.trim();

          const aNum = toNumber(rawA);
          const bNum = toNumber(rawB);
          const tNum = toNumber(rawT);

          if (!isFinite(aNum) || isNaN(aNum)) {
            showScaleError(
              "Please enter a valid number for the ratio first term a."
            );
            return;
          }
          if (!isFinite(bNum) || isNaN(bNum)) {
            showScaleError(
              "Please enter a valid number for the ratio second term b."
            );
            return;
          }
          if (!isFinite(tNum) || isNaN(tNum)) {
            showScaleError("Please enter a valid number for the new total T.");
            return;
          }
          if (aNum === 0 && bNum === 0) {
            showScaleError(
              "The sum a + b cannot be zero when scaling a ratio. Adjust the original ratio."
            );
            return;
          }

          const sum = aNum + bNum;
          if (sum === 0) {
            showScaleError(
              "The sum a + b is zero; cannot compute scaled parts. Adjust the ratio."
            );
            return;
          }

          const A = tNum * (aNum / sum);
          const B = tNum * (bNum / sum);

          scaleARes.textContent = A.toFixed(6).replace(/\.?0+$/, "");
          scaleBRes.textContent = B.toFixed(6).replace(/\.?0+$/, "");
          scaleSteps.textContent =
            "Using A = (a / (a + b)) · T and B = (b / (a + b)) · T with a = " +
            aNum +
            ", b = " +
            bNum +
            ", T = " +
            tNum +
            ", we get A ≈ " +
            A.toFixed(6) +
            " and B ≈ " +
            B.toFixed(6) +
            ".";
        }

        btnScale.addEventListener("click", handleScale);
        [scaleA, scaleB, scaleTotal].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              handleScale();
            }
          });
        });

        // --------- Proportion solver ----------
        const propA = document.getElementById("prop-a");
        const propB = document.getElementById("prop-b");
        const propC = document.getElementById("prop-c");
        const propD = document.getElementById("prop-d");
        const propError = document.getElementById("prop-error");
        const propResult = document.getElementById("prop-result");
        const propSteps = document.getElementById("prop-steps");
        const btnProp = document.getElementById("btn-prop");
        const btnPropClear = document.getElementById("btn-prop-clear");
        const propUnknownRadios = Array.prototype.slice.call(
          document.querySelectorAll('input[name="prop-unknown"]')
        );

        function clearPropError() {
          propError.textContent = "";
          propError.classList.add("hidden");
        }
        function showPropError(msg) {
          propError.textContent = msg;
          propError.classList.remove("hidden");
        }

        function handlePropClear() {
          propA.value = "";
          propB.value = "";
          propC.value = "";
          propD.value = "";
          propUnknownRadios.forEach(function (r) {
            r.checked = false;
          });
          clearPropError();
          propResult.textContent = "—";
          propSteps.textContent =
            "Cross-multiplication steps will appear here after a calculation.";
        }

        function handlePropSolve() {
          clearPropError();
          propResult.textContent = "—";
          propSteps.textContent =
            "Cross-multiplication steps will appear here after a calculation.";

          const unknown = propUnknownRadios.find(function (r) {
            return r.checked;
          });
          if (!unknown) {
            showPropError(
              "Please select which term (a, b, c, or d) is unknown."
            );
            return;
          }
          const unk = unknown.value;

          const rawA = propA.value.trim();
          const rawB = propB.value.trim();
          const rawC = propC.value.trim();
          const rawD = propD.value.trim();

          let a = toNumber(rawA);
          let b = toNumber(rawB);
          let c = toNumber(rawC);
          let d = toNumber(rawD);

          // For the unknown, we don't care about the current value; it will be overwritten.
          // Validate the other three.
          function ensureNumber(name, value, raw) {
            if (isNaN(value) || !isFinite(value)) {
              showPropError(
                "Please enter a valid numeric value for " + name + "."
              );
              return false;
            }
            return true;
          }

          if (unk !== "a" && !ensureNumber("a", a, rawA)) return;
          if (unk !== "b" && !ensureNumber("b", b, rawB)) return;
          if (unk !== "c" && !ensureNumber("c", c, rawC)) return;
          if (unk !== "d" && !ensureNumber("d", d, rawD)) return;

          let x = null;
          let formula = "";

          if (unk === "d") {
            if (a === 0) {
              showPropError(
                "Cannot solve for d because a = 0 would give division by zero in d = (b · c) / a."
              );
              return;
            }
            x = (b * c) / a;
            formula =
              "d = (b · c) / a = (" + b + " · " + c + ") / " + a + " = " + x;
            d = x;
          } else if (unk === "c") {
            if (b === 0) {
              showPropError(
                "Cannot solve for c because b = 0 would give division by zero in c = (a · d) / b."
              );
              return;
            }
            x = (a * d) / b;
            formula =
              "c = (a · d) / b = (" + a + " · " + d + ") / " + b + " = " + x;
            c = x;
          } else if (unk === "b") {
            if (c === 0) {
              showPropError(
                "Cannot solve for b because c = 0 would give division by zero in b = (a · d) / c."
              );
              return;
            }
            x = (a * d) / c;
            formula =
              "b = (a · d) / c = (" + a + " · " + d + ") / " + c + " = " + x;
            b = x;
          } else if (unk === "a") {
            if (d === 0) {
              showPropError(
                "Cannot solve for a because d = 0 would give division by zero in a = (b · c) / d."
              );
              return;
            }
            x = (b * c) / d;
            formula =
              "a = (b · c) / d = (" + b + " · " + c + ") / " + d + " = " + x;
            a = x;
          }

          if (x === null || !isFinite(x)) {
            showPropError(
              "Could not compute a finite solution. Please check the inputs."
            );
            return;
          }

          const xRounded = x.toFixed(6).replace(/\.?0+$/, "");
          propResult.textContent = unk + " = " + xRounded;
          propSteps.textContent =
            "From a:b = c:d we have a·d = b·c. Solving for " +
            unk +
            " gives " +
            formula +
            " ≈ " +
            xRounded +
            ".";
        }

        btnProp.addEventListener("click", handlePropSolve);
        btnPropClear.addEventListener("click", handlePropClear);

        // --------- Ratio to fraction & percentage ----------
        const convA = document.getElementById("conv-a");
        const convB = document.getElementById("conv-b");
        const btnConv = document.getElementById("btn-conv");
        const convError = document.getElementById("conv-error");
        const convFrac = document.getElementById("conv-frac");
        const convDec = document.getElementById("conv-decimal");
        const convPctA = document.getElementById("conv-pct-a");
        const convPctB = document.getElementById("conv-pct-b");

        function clearConvError() {
          convError.textContent = "";
          convError.classList.add("hidden");
        }
        function showConvError(msg) {
          convError.textContent = msg;
          convError.classList.remove("hidden");
        }

        function handleConv() {
          clearConvError();
          convFrac.textContent = "—";
          convDec.textContent = "—";
          convPctA.textContent = "—";
          convPctB.textContent = "—";

          const rawA = convA.value.trim();
          const rawB = convB.value.trim();

          const aNum = toNumber(rawA);
          const bNum = toNumber(rawB);

          if (!isFinite(aNum) || isNaN(aNum)) {
            showConvError("Please enter a valid number for a.");
            return;
          }
          if (!isFinite(bNum) || isNaN(bNum)) {
            showConvError("Please enter a valid number for b.");
            return;
          }
          if (bNum === 0) {
            showConvError(
              "b = 0 makes the fraction a/b undefined. Please use a non-zero second term."
            );
            return;
          }

          const fracStr = aNum + " / " + bNum;
          const dec = aNum / bNum;
          const total = aNum + bNum;

          convFrac.textContent = fracStr;
          convDec.textContent = dec.toFixed(6).replace(/\.?0+$/, "");

          if (total === 0) {
            convPctA.textContent = "Total is zero, cannot compute percentages.";
            convPctB.textContent = "Total is zero, cannot compute percentages.";
          } else {
            const pA = (aNum / total) * 100;
            const pB = (bNum / total) * 100;
            convPctA.textContent = pA.toFixed(4).replace(/\.?0+$/, "") + " %";
            convPctB.textContent = pB.toFixed(4).replace(/\.?0+$/, "") + " %";
          }
        }

        btnConv.addEventListener("click", handleConv);
        [convA, convB].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              handleConv();
            }
          });
        });

        // Initialize proportion section
        handlePropClear();
      })();
    </script>

