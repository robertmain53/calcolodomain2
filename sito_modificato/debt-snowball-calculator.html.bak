    <script>
      // Debt Snowball Calculator Logic
      const debtsTbody = document.getElementById("debts-tbody");
      const addDebtBtn = document.getElementById("add-debt-btn");
      const resetDebtsBtn = document.getElementById("reset-debts-btn");
      const calculateBtn = document.getElementById("calculate-btn");
      const extraPaymentInput = document.getElementById("extra-payment-input");
      const calcError = document.getElementById("calc-error");
      const resultsSection = document.getElementById("results-section");
      const debtFreeDateEl = document.getElementById("debt-free-date");
      const monthsToDebtFreeEl = document.getElementById("months-to-debt-free");
      const totalInterestEl = document.getElementById("total-interest");
      const totalPaidEl = document.getElementById("total-paid");
      const monthlyPaymentEl = document.getElementById("monthly-payment");
      const scheduleTbody = document.getElementById("schedule-tbody");
      const exportCsvBtn = document.getElementById("export-csv-btn");
      const runComparisonBtn = document.getElementById("run-comparison-btn");
      const cmpSnowballMonths = document.getElementById("cmp-snowball-months");
      const cmpSnowballInterest = document.getElementById(
        "cmp-snowball-interest"
      );
      const cmpAvalancheMonths = document.getElementById(
        "cmp-avalanche-months"
      );
      const cmpAvalancheInterest = document.getElementById(
        "cmp-avalanche-interest"
      );
      const cmpNote = document.getElementById("cmp-note");

      let lastSchedule = [];
      let lastDebtsSnapshot = [];

      function createDebtRow(name = "", balance = "", apr = "", minPay = "") {
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";

        tr.innerHTML = `
      <td class="px-3 py-2">
        <div class="flex items-center gap-2">
          <span class="cursor-move text-gray-400" title="Drag to reorder">&#x2630;</span>
          <input type="text" class="w-full border border-gray-200 rounded-md px-2 py-1 text-sm" value="${name}" placeholder="e.g. Credit Card 1">
        </div>
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="input-number w-28 border border-gray-200 rounded-md px-2 py-1 text-right text-sm" value="${balance}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="input-number w-24 border border-gray-200 rounded-md px-2 py-1 text-right text-sm" value="${apr}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="input-number w-28 border border-gray-200 rounded-md px-2 py-1 text-right text-sm" value="${minPay}">
      </td>
      <td class="px-3 py-2 text-center">
        <button type="button" class="text-xs text-red-600 hover:underline remove-debt-btn">Remove</button>
      </td>
    `;
        debtsTbody.appendChild(tr);
      }

      function initDefaultDebts() {
        debtsTbody.innerHTML = "";
        createDebtRow("Credit Card 1", "3500", "19.99", "90");
        createDebtRow("Credit Card 2", "1200", "17.99", "35");
        createDebtRow("Car Loan", "8000", "5.5", "220");
      }

      addDebtBtn.addEventListener("click", () => {
        createDebtRow();
      });

      resetDebtsBtn.addEventListener("click", () => {
        initDefaultDebts();
        resultsSection.classList.add("hidden");
        calcError.classList.add("hidden");
      });

      debtsTbody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-debt-btn")) {
          const rows = debtsTbody.querySelectorAll("tr");
          if (rows.length > 1) {
            e.target.closest("tr").remove();
          }
        }
      });

      function getStrategy() {
        const radios = document.querySelectorAll('input[name="strategy"]');
        for (const r of radios) {
          if (r.checked) return r.value;
        }
        return "snowball";
      }

      function readDebtsFromTable() {
        const rows = debtsTbody.querySelectorAll("tr");
        const debts = [];
        rows.forEach((tr, index) => {
          const inputs = tr.querySelectorAll("input");
          const name = inputs[0].value.trim() || `Debt ${index + 1}`;
          const balance = parseFloat(inputs[1].value);
          const apr = parseFloat(inputs[2].value);
          const minPay = parseFloat(inputs[3].value);
          if (
            isFinite(balance) &&
            balance > 0 &&
            isFinite(apr) &&
            apr >= 0 &&
            isFinite(minPay) &&
            minPay > 0
          ) {
            debts.push({
              id: index,
              name,
              balance,
              apr,
              minPay,
              order: index,
            });
          }
        });
        return debts;
      }

      function sortDebts(debts, strategy) {
        const arr = debts.slice();
        if (strategy === "snowball") {
          arr.sort((a, b) => a.balance - b.balance);
        } else if (strategy === "avalanche") {
          arr.sort((a, b) => b.apr - a.apr);
        } else if (strategy === "custom") {
          arr.sort((a, b) => a.order - b.order);
        }
        return arr;
      }

      function simulatePlan(debtsInput, extraPayment, strategy) {
        const debts = debtsInput.map((d) => ({ ...d, balance: d.balance }));
        const monthlyRate = (apr) => apr / 100 / 12;
        const schedule = [];
        let monthIndex = 0;
        let totalInterest = 0;
        let totalPaid = 0;
        const minTotal = debts.reduce((sum, d) => sum + d.minPay, 0);
        const monthlyBudget = minTotal + extraPayment;
        const maxMonths = 600; // 50 years cap

        while (debts.some((d) => d.balance > 0.01) && monthIndex < maxMonths) {
          monthIndex++;
          const date = new Date();
          date.setMonth(date.getMonth() + monthIndex);
          let monthInterest = 0;
          let monthPrincipal = 0;
          let remainingBudget = monthlyBudget;

          // 1. Accrue interest
          debts.forEach((d) => {
            if (d.balance <= 0) return;
            const interest = d.balance * monthlyRate(d.apr);
            d.balance += interest;
            monthInterest += interest;
          });

          // 2. Pay minimums
          debts.forEach((d) => {
            if (d.balance <= 0 || remainingBudget <= 0) return;
            const pay = Math.min(d.minPay, d.balance, remainingBudget);
            d.balance -= pay;
            remainingBudget -= pay;
            monthPrincipal += Math.max(0, pay); // interest already added above
          });

          // 3. Apply extra to target debt
          while (
            remainingBudget > 0.01 &&
            debts.some((d) => d.balance > 0.01)
          ) {
            const ordered = sortDebts(
              debts.filter((d) => d.balance > 0.01),
              strategy
            );
            const target = ordered[0];
            const pay = Math.min(target.balance, remainingBudget);
            target.balance -= pay;
            remainingBudget -= pay;
            monthPrincipal += pay;
          }

          const remainingBalance = debts.reduce(
            (sum, d) => sum + Math.max(0, d.balance),
            0
          );
          const monthPayment = monthInterest + monthPrincipal;

          totalInterest += monthInterest;
          totalPaid += monthPayment;

          schedule.push({
            monthIndex,
            date,
            payment: monthPayment,
            interest: monthInterest,
            principal: monthPrincipal,
            remainingBalance,
          });

          if (remainingBalance <= 0.01) break;
        }

        return {
          schedule,
          totalInterest,
          totalPaid,
          months: schedule.length,
          monthlyBudget,
        };
      }

      function formatCurrency(value) {
        return "$" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
      }

      function formatDate(date) {
        return date.toLocaleDateString(undefined, {
          year: "numeric",
          month: "short",
        });
      }

      function updateResultsView(result) {
        if (!result || result.schedule.length === 0) return;
        const last = result.schedule[result.schedule.length - 1];
        debtFreeDateEl.textContent = formatDate(last.date);
        monthsToDebtFreeEl.textContent =
          result.months + (result.months === 1 ? " month" : " months");
        totalInterestEl.textContent = formatCurrency(result.totalInterest);
        totalPaidEl.textContent =
          "Total paid: " + formatCurrency(result.totalPaid);
        monthlyPaymentEl.textContent = formatCurrency(result.monthlyBudget);

        scheduleTbody.innerHTML = "";
        result.schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "border-t border-gray-100";
          tr.innerHTML = `
        <td class="px-2 py-1 text-left">${row.monthIndex}</td>
        <td class="px-2 py-1 text-left">${formatDate(row.date)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(row.payment)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(row.interest)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(row.principal)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(
          row.remainingBalance
        )}</td>
      `;
          scheduleTbody.appendChild(tr);
        });
      }

      calculateBtn.addEventListener("click", () => {
        calcError.classList.add("hidden");
        const debts = readDebtsFromTable();
        const extra = parseFloat(extraPaymentInput.value) || 0;

        if (debts.length === 0) {
          calcError.textContent =
            "Please enter at least one valid debt with balance, APR, and minimum payment.";
          calcError.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }
        if (extra < 0) {
          calcError.textContent = "Extra payment cannot be negative.";
          calcError.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const strategy = getStrategy();
        const result = simulatePlan(debts, extra, strategy);
        lastSchedule = result.schedule;
        lastDebtsSnapshot = debts;
        updateResultsView(result);
        resultsSection.classList.remove("hidden");
        runComparison(); // auto-run comparison
      });

      function runComparison() {
        const debts = lastDebtsSnapshot.length
          ? lastDebtsSnapshot
          : readDebtsFromTable();
        const extra = parseFloat(extraPaymentInput.value) || 0;
        if (!debts.length) return;

        const snowballRes = simulatePlan(debts, extra, "snowball");
        const avalancheRes = simulatePlan(debts, extra, "avalanche");

        cmpSnowballMonths.textContent = `Debt-free in ${
          snowballRes.months
        } month(s); interest: ${formatCurrency(snowballRes.totalInterest)}`;
        cmpSnowballInterest.textContent = `Total paid: ${formatCurrency(
          snowballRes.totalPaid
        )}`;

        cmpAvalancheMonths.textContent = `Debt-free in ${
          avalancheRes.months
        } month(s); interest: ${formatCurrency(avalancheRes.totalInterest)}`;
        cmpAvalancheInterest.textContent = `Total paid: ${formatCurrency(
          avalancheRes.totalPaid
        )}`;

        const diffMonths = snowballRes.months - avalancheRes.months;
        const diffInterest =
          snowballRes.totalInterest - avalancheRes.totalInterest;
        let note = "";
        if (Math.abs(diffInterest) < 1) {
          note =
            "Both strategies result in almost the same total interest. Choose the one that keeps you most motivated.";
        } else if (diffInterest > 0) {
          note = `Avalanche saves about ${formatCurrency(
            Math.abs(diffInterest)
          )} in interest compared with snowball, but snowball may feel more motivating due to quicker early wins.`;
        } else {
          note =
            "Snowball pays slightly less interest in this specific setup because of how your balances and rates line up, but this is uncommon.";
        }
        if (diffMonths !== 0) {
          note += ` The payoff time differs by ${Math.abs(
            diffMonths
          )} month(s).`;
        }
        cmpNote.textContent = note;
      }

      runComparisonBtn.addEventListener("click", runComparison);

      exportCsvBtn.addEventListener("click", () => {
        if (!lastSchedule.length) return;
        let csv =
          "Month,Date,Total Payment,Interest,Principal,Remaining Balance\n";
        lastSchedule.forEach((r) => {
          csv +=
            [
              r.monthIndex,
              formatDate(r.date),
              r.payment.toFixed(2),
              r.interest.toFixed(2),
              r.principal.toFixed(2),
              r.remainingBalance.toFixed(2),
            ].join(",") + "\n";
        });
        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "debt-snowball-schedule.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      });

      // Initialize defaults on load
      initDefaultDebts();
    </script>

