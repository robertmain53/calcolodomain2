    <script>
      // Utility helpers
      function clampNumber(value, min, max) {
        if (isNaN(value)) return NaN;
        if (min !== undefined && value < min) return min;
        if (max !== undefined && value > max) return max;
        return value;
      }

      function parsePositive(value) {
        const n = Number(value);
        return isNaN(n) || n < 0 ? NaN : n;
      }

      function formatNumber(n) {
        if (!isFinite(n)) return "–";
        if (Math.abs(n) >= 1e6) return n.toExponential(2);
        return n.toLocaleString(undefined, { maximumFractionDigits: 2 });
      }

      function getCompletionDate(days) {
        if (!isFinite(days) || days < 0) return "–";
        const now = new Date();
        const msToAdd = days * 24 * 60 * 60 * 1000;
        const target = new Date(now.getTime() + msToAdd);
        return target.toLocaleDateString(undefined, {
          year: "numeric",
          month: "short",
          day: "numeric",
        });
      }

      // XP curve functions
      function buildXpTableLinear(baseXP, maxLevel) {
        const arr = [];
        for (let L = 1; L < maxLevel; L++) {
          arr.push(baseXP);
        }
        return arr;
      }

      function buildXpTableQuadratic(baseXP, k, maxLevel) {
        const arr = [];
        for (let L = 1; L < maxLevel; L++) {
          const xp = baseXP * Math.pow(L, k);
          arr.push(Math.round(xp));
        }
        return arr;
      }

      function parseCustomXpTable(text) {
        const lines = text
          .split(/\r?\n/)
          .map((l) => l.trim())
          .filter((l) => l.length > 0);
        const arr = [];
        for (const line of lines) {
          const n = Number(line.replace(/,/g, ""));
          if (!isFinite(n) || n <= 0) return null;
          arr.push(n);
        }
        return arr.length ? arr : null;
      }

      function calculateTotalXp(xpTable, currentLevel, currentXP, targetLevel) {
        let total = 0;
        for (let L = currentLevel; L < targetLevel; L++) {
          const idx = L - 1; // level 1->2 is index 0
          if (idx < 0 || idx >= xpTable.length) break;
          total += xpTable[idx];
        }
        total -= currentXP;
        return Math.max(0, total);
      }

      function updatePerLevelTable(xpTable, currentLevel, targetLevel) {
        const wrapper = document.getElementById("per-level-table-wrapper");
        const tbody = document.getElementById("per-level-tbody");
        tbody.innerHTML = "";

        if (
          !xpTable ||
          !isFinite(currentLevel) ||
          !isFinite(targetLevel) ||
          targetLevel <= currentLevel
        ) {
          wrapper.classList.add("hidden");
          return;
        }

        let cumulative = 0;
        for (let L = currentLevel; L < targetLevel; L++) {
          const idx = L - 1;
          if (idx < 0 || idx >= xpTable.length) break;
          const xp = xpTable[idx];
          cumulative += xp;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1.5 text-gray-700">${L}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${formatNumber(
          xp
        )}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${formatNumber(
          cumulative
        )}</td>
      `;
          tbody.appendChild(tr);
        }

        if (tbody.children.length > 0) {
          wrapper.classList.remove("hidden");
        } else {
          wrapper.classList.add("hidden");
        }
      }

      function runCalculation() {
        const errorEl = document.getElementById("error-msg");
        errorEl.textContent = "";

        const currentLevel = clampNumber(
          parseInt(document.getElementById("current-level").value, 10),
          1
        );
        const currentXP = parsePositive(
          document.getElementById("current-xp").value
        );
        const targetLevel = clampNumber(
          parseInt(document.getElementById("target-level").value, 10),
          1
        );
        const maxLevelInput = document.getElementById("max-level").value.trim();
        const maxLevel = maxLevelInput
          ? clampNumber(parseInt(maxLevelInput, 10), 1)
          : null;

        const xpCurve = document.getElementById("xp-curve").value;
        const baseXP = parsePositive(document.getElementById("base-xp").value);
        const curveFactor = parsePositive(
          document.getElementById("curve-factor").value
        );
        const customText = document.getElementById("custom-xp-table").value;

        const xpPerAction = parsePositive(
          document.getElementById("xp-per-action").value
        );
        const actionsPerHour = parsePositive(
          document.getElementById("actions-per-hour").value
        );
        const dailyHours = parsePositive(
          document.getElementById("daily-hours").value
        );
        const bonus = parsePositive(
          document.getElementById("rested-bonus").value
        );

        if (!isFinite(currentLevel) || !isFinite(targetLevel)) {
          errorEl.textContent = "Please enter valid current and target levels.";
          return;
        }
        if (maxLevel && (currentLevel > maxLevel || targetLevel > maxLevel)) {
          errorEl.textContent =
            "Current or target level exceeds the specified max level.";
          return;
        }
        if (
          targetLevel < currentLevel ||
          (targetLevel === currentLevel && currentXP <= 0)
        ) {
          errorEl.textContent =
            "Target level must be higher than current level, or you must need more XP in this level.";
          return;
        }
        if (!isFinite(currentXP)) {
          errorEl.textContent = "Please enter a valid current XP value.";
          return;
        }
        if (
          !isFinite(xpPerAction) ||
          !isFinite(actionsPerHour) ||
          !isFinite(dailyHours) ||
          !isFinite(bonus) ||
          xpPerAction <= 0 ||
          actionsPerHour <= 0 ||
          dailyHours <= 0 ||
          bonus <= 0
        ) {
          errorEl.textContent =
            "XP per action, actions per hour, hours per day, and bonus must all be positive.";
          return;
        }

        let xpTable = null;
        const effectiveMaxLevel =
          maxLevel || Math.max(targetLevel + 5, currentLevel + 5);

        if (xpCurve === "linear") {
          if (!isFinite(baseXP) || baseXP <= 0) {
            errorEl.textContent =
              "Please enter a valid base XP for the linear curve.";
            return;
          }
          xpTable = buildXpTableLinear(baseXP, effectiveMaxLevel);
        } else if (xpCurve === "quadratic") {
          if (
            !isFinite(baseXP) ||
            baseXP <= 0 ||
            !isFinite(curveFactor) ||
            curveFactor <= 0
          ) {
            errorEl.textContent =
              "Please enter valid base XP and curve intensity.";
            return;
          }
          xpTable = buildXpTableQuadratic(
            baseXP,
            curveFactor,
            effectiveMaxLevel
          );
        } else if (xpCurve === "custom") {
          xpTable = parseCustomXpTable(customText);
          if (!xpTable) {
            errorEl.textContent =
              "Please provide a valid custom XP table (one positive number per line).";
            return;
          }
          if (targetLevel - 1 > xpTable.length) {
            errorEl.textContent =
              "Your custom table does not include enough levels for the chosen target level.";
            return;
          }
        }

        const totalXP = calculateTotalXp(
          xpTable,
          currentLevel,
          currentXP,
          targetLevel
        );
        const effectiveXPPerAction = xpPerAction * bonus;
        const actionsRequired = totalXP / effectiveXPPerAction;
        const hoursRequired = actionsRequired / actionsPerHour;
        const daysRequired = hoursRequired / dailyHours;

        document.getElementById("total-xp").textContent = formatNumber(totalXP);
        document.getElementById("levels-to-gain").textContent = formatNumber(
          targetLevel - currentLevel
        );
        document.getElementById("xp-per-hour").textContent = formatNumber(
          effectiveXPPerAction * actionsPerHour
        );
        document.getElementById("actions-required").textContent =
          formatNumber(actionsRequired);
        document.getElementById("hours-required").textContent =
          formatNumber(hoursRequired);
        document.getElementById("days-required").textContent =
          formatNumber(daysRequired);
        document.getElementById("completion-date").textContent =
          getCompletionDate(daysRequired);

        updatePerLevelTable(xpTable, currentLevel, targetLevel);
      }

      function resetForm() {
        document.getElementById("current-level").value = 1;
        document.getElementById("current-xp").value = 0;
        document.getElementById("target-level").value = 10;
        document.getElementById("max-level").value = "";
        document.getElementById("xp-curve").value = "quadratic";
        document.getElementById("base-xp").value = 100;
        document.getElementById("curve-factor").value = 1.5;
        document.getElementById("custom-xp-table").value = "";
        document.getElementById("xp-per-action").value = 50;
        document.getElementById("actions-per-hour").value = 60;
        document.getElementById("daily-hours").value = 2;
        document.getElementById("rested-bonus").value = 1;
        document.getElementById("error-msg").textContent = "";

        document.getElementById("total-xp").textContent = "–";
        document.getElementById("levels-to-gain").textContent = "–";
        document.getElementById("xp-per-hour").textContent = "–";
        document.getElementById("actions-required").textContent = "–";
        document.getElementById("hours-required").textContent = "–";
        document.getElementById("days-required").textContent = "–";
        document.getElementById("completion-date").textContent = "–";
        document.getElementById("per-level-tbody").innerHTML = "";
        document
          .getElementById("per-level-table-wrapper")
          .classList.add("hidden");

        handleCurveChange();
      }

      function handleCurveChange() {
        const curve = document.getElementById("xp-curve").value;
        const baseWrapper = document.getElementById("base-xp-wrapper");
        const curveWrapper = document.getElementById("curve-factor-wrapper");
        const customWrapper = document.getElementById("custom-table-wrapper");

        if (curve === "linear") {
          baseWrapper.classList.remove("hidden");
          curveWrapper.classList.add("hidden");
          customWrapper.classList.add("hidden");
        } else if (curve === "quadratic") {
          baseWrapper.classList.remove("hidden");
          curveWrapper.classList.remove("hidden");
          customWrapper.classList.add("hidden");
        } else if (curve === "custom") {
          baseWrapper.classList.add("hidden");
          curveWrapper.classList.add("hidden");
          customWrapper.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("xp-curve")
          .addEventListener("change", handleCurveChange);
        document
          .getElementById("calculate-btn")
          .addEventListener("click", runCalculation);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetForm);

        [
          "current-level",
          "current-xp",
          "target-level",
          "max-level",
          "base-xp",
          "curve-factor",
          "custom-xp-table",
          "xp-per-action",
          "actions-per-hour",
          "daily-hours",
          "rested-bonus",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("keydown", function (e) {
              if (e.key === "Enter") {
                e.preventDefault();
                runCalculation();
              }
            });
          }
        });

        handleCurveChange();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
