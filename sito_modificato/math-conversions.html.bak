      function populateUnits(category) {
        const data = unitData[category];
        fromUnitSelect.innerHTML = "";
        toUnitSelect.innerHTML = "";
        Object.entries(data.units).forEach(([key, info]) => {
          const label = `${key} – ${info.name}`;
          const opt1 = document.createElement("option");
          opt1.value = key;
          opt1.textContent = label;
          const opt2 = opt1.cloneNode(true);
          fromUnitSelect.appendChild(opt1);
          toUnitSelect.appendChild(opt2);
        });

        // Sensible defaults per category
        if (category === "length") {
          fromUnitSelect.value = "m";
          toUnitSelect.value = "cm";
        } else if (category === "area") {
          fromUnitSelect.value = "m²";
          toUnitSelect.value = "ft²";
        } else if (category === "volume") {
          fromUnitSelect.value = "L";
          toUnitSelect.value = "mL";
        } else if (category === "mass") {
          fromUnitSelect.value = "kg";
          toUnitSelect.value = "lb";
        } else if (category === "temperature") {
          fromUnitSelect.value = "C";
          toUnitSelect.value = "F";
        } else if (category === "time") {
          fromUnitSelect.value = "min";
          toUnitSelect.value = "h";
        } else if (category === "speed") {
          fromUnitSelect.value = "mph";
          toUnitSelect.value = "m/s";
        }
      }

      function formatNumber(value) {
        if (!isFinite(value)) return "NaN";
        const abs = Math.abs(value);
        if (abs !== 0 && (abs < 0.0001 || abs >= 1e6)) {
          return value.toExponential(6);
        }
        return Number(value.toPrecision(6)).toString();
      }

      function convertValue(category, value, fromUnit, toUnit) {
        const data = unitData[category];
        if (category === "temperature") {
          const from = data.units[fromUnit];
          const to = data.units[toUnit];
          const base = from.toBase(value);
          const out = to.fromBase(base);
          return { result: out, baseValue: base };
        } else {
          const from = data.units[fromUnit];
          const to = data.units[toUnit];
          const base = value * from.factor;
          const out = base / to.factor;
          return { result: out, baseValue: base };
        }
      }

      function buildSteps(category, value, fromUnit, toUnit) {
        const data = unitData[category];
        const v = Number(value);
        let html = "";

        if (category === "temperature") {
          if (fromUnit === "C" && toUnit === "F") {
            html += `<p>Start with the Celsius value:</p>`;
            html += `<p>\\( ^\\circ F = \\dfrac{9}{5} \\times ^\\circ C + 32 \\)</p>`;
            html += `<p>\\( ^\\circ F = \\dfrac{9}{5} \\times ${v} + 32 \\)</p>`;
            html += `<p>\\( ^\\circ F = ${formatNumber(
              (v * 9) / 5
            )} + 32 = ${formatNumber((v * 9) / 5 + 32)} \\)</p>`;
          } else if (fromUnit === "F" && toUnit === "C") {
            html += `<p>Start with the Fahrenheit value:</p>`;
            html += `<p>\\( ^\\circ C = \\dfrac{5}{9} ( ^\\circ F - 32 ) \\)</p>`;
            html += `<p>\\( ^\\circ C = \\dfrac{5}{9} (${v} - 32) \\)</p>`;
            html += `<p>\\( ^\\circ C = \\dfrac{5}{9} (${formatNumber(
              v - 32
            )}) = ${formatNumber(((v - 32) * 5) / 9)} \\)</p>`;
          } else if (fromUnit === "C" && toUnit === "K") {
            html += `<p>Kelvin is Celsius plus 273.15:</p>`;
            html += `<p>\\( K = ^\\circ C + 273.15 = ${v} + 273.15 = ${formatNumber(
              v + 273.15
            )} \\)</p>`;
          } else if (fromUnit === "K" && toUnit === "C") {
            html += `<p>Celsius is Kelvin minus 273.15:</p>`;
            html += `<p>\\( ^\\circ C = K - 273.15 = ${v} - 273.15 = ${formatNumber(
              v - 273.15
            )} \\)</p>`;
          } else {
            html += `<p>This temperature conversion is done in two steps via Celsius (the base unit):</p>`;
            html += `<ol class="list-decimal ml-5">
          <li>Convert ${fromUnit} to Celsius.</li>
          <li>Convert Celsius to ${toUnit}.</li>
        </ol>`;
          }
          return html;
        }

        const from = data.units[fromUnit];
        const to = data.units[toUnit];

        html += `<p>1. Write the given value as a fraction:</p>`;
        html += `<p>\\( \\dfrac{${v}\\,${fromUnit}}{1} \\)</p>`;

        html += `<p class="mt-2">2. Multiply by a conversion factor that equals 1, arranged so that <strong>${fromUnit}</strong> cancels and <strong>${toUnit}</strong> remains.</p>`;

        if (
          category === "length" ||
          category === "mass" ||
          category === "time" ||
          category === "speed" ||
          category === "volume" ||
          category === "area"
        ) {
          html += `<p>Base unit for this category: <strong>${data.base}</strong>.</p>`;
          html += `<p>From unit to base: \\( 1\\,${fromUnit} = ${formatNumber(
            from.factor
          )}\\,${data.base} \\)</p>`;
          html += `<p>Base to target unit: \\( 1\\,${toUnit} = ${formatNumber(
            to.factor
          )}\\,${data.base} \\)</p>`;
          html += `<p class="mt-2">3. Convert step by step:</p>`;
          html += `<p>\\[
      ${v}\\,${fromUnit}
      \\times \\frac{${formatNumber(from.factor)}\\,${
            data.base
          }}{1\\,${fromUnit}}
      = ${formatNumber(v * from.factor)}\\,${data.base}
      \\]</p>`;
          html += `<p>\\[
      ${formatNumber(v * from.factor)}\\,${data.base}
      \\times \\frac{1\\,${toUnit}}{${formatNumber(to.factor)}\\,${data.base}}
      = ${formatNumber((v * from.factor) / to.factor)}\\,${toUnit}
      \\]</p>`;
        }

        return html;
      }

      function performConversion(showSteps = false) {
        const category = categorySelect.value;
        const fromUnit = fromUnitSelect.value;
        const toUnit = toUnitSelect.value;
        const rawValue = fromValueInput.value;

        errorMsg.classList.add("hidden");
        stepsPanel.classList.add("hidden");

        const value = Number(rawValue);
        if (isNaN(value)) {
          errorMsg.textContent = "Please enter a valid number.";
          errorMsg.classList.remove("hidden");
          return;
        }

        if (fromUnit === toUnit) {
          resultText.textContent = `${formatNumber(
            value
          )} ${fromUnit} = ${formatNumber(value)} ${toUnit}`;
          resultNote.textContent = "Same units selected; value is unchanged.";
          return;
        }

        const { result } = convertValue(category, value, fromUnit, toUnit);
        const formatted = formatNumber(result);
        resultText.textContent = `${formatNumber(
          value
        )} ${fromUnit} = ${formatted} ${toUnit}`;
        resultNote.textContent = "Rounded to 6 significant figures.";

        if (showSteps) {
          stepsContent.innerHTML = buildSteps(
            category,
            value,
            fromUnit,
            toUnit
          );
          stepsPanel.classList.remove("hidden");
          if (window.MathJax && window.MathJax.typesetPromise) {
            MathJax.typesetPromise([stepsContent]);
          }
        }
      }

      document
        .getElementById("convertBtn")
        .addEventListener("click", () => performConversion(false));
      document
        .getElementById("showStepsBtn")
        .addEventListener("click", () => performConversion(true));

      document.getElementById("swapUnits").addEventListener("click", () => {
        const tmp = fromUnitSelect.value;
        fromUnitSelect.value = toUnitSelect.value;
        toUnitSelect.value = tmp;
        performConversion(false);
      });

      // Presets for quick teaching scenarios
      document.querySelectorAll("[data-preset]").forEach((btn) => {
        btn.addEventListener("click", () => {
          const preset = btn.getAttribute("data-preset");
          if (preset === "metric-imperial") {
            categorySelect.value = "length";
            populateUnits("length");
            fromUnitSelect.value = "cm";
            toUnitSelect.value = "in";
            fromValueInput.value = 10;
          } else if (preset === "school") {
            categorySelect.value = "time";
            populateUnits("time");
            fromUnitSelect.value = "min";
            toUnitSelect.value = "s";
            fromValueInput.value = 3.5;
          } else if (preset === "science") {
            categorySelect.value = "mass";
            populateUnits("mass");
            fromUnitSelect.value = "g";
            toUnitSelect.value = "kg";
            fromValueInput.value = 250;
          }
          performConversion(false);
        });
      });

      // Initialize
      populateUnits(categorySelect.value);
      performConversion(false);

      // Simple FAQ toggle (in addition to global script_faq if present)
      document.querySelectorAll("#faq .faq-question").forEach((btn) => {
        btn.addEventListener("click", () => {
          const answer = btn.parentElement.querySelector(".faq-answer");
          const symbol = btn.querySelector("span:last-child");
          const isHidden = answer.classList.contains("hidden");
          document
            .querySelectorAll("#faq .faq-answer")
            .forEach((a) => a.classList.add("hidden"));
          document
            .querySelectorAll("#faq .faq-question span:last-child")
            .forEach((s) => (s.textContent = "+"));
          if (isHidden) {
            answer.classList.remove("hidden");
            symbol.textContent = "−";
          }
        });
      });

      window.MathJax = window.MathJax || {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>

