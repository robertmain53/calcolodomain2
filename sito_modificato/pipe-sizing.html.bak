    <script>
      // Basic constants
      const G = 9.80665; // m/s²
      const RHO_WATER = 1000; // kg/m³

      const modeButtons = document.querySelectorAll(".mode-btn");
      const velocityGroup = document.getElementById("velocity-input-group");
      const pressureGroup = document.getElementById("pressure-input-group");
      let currentMode = "velocity";

      modeButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          currentMode = btn.dataset.mode;
          modeButtons.forEach((b) => {
            if (b === btn) {
              b.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              b.classList.add("border-blue-600", "text-blue-600", "bg-blue-50");
            } else {
              b.classList.add("border-gray-300", "text-gray-700", "bg-white");
              b.classList.remove(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50"
              );
            }
          });
          if (currentMode === "velocity") {
            velocityGroup.classList.remove("hidden");
            pressureGroup.classList.add("hidden");
          } else {
            pressureGroup.classList.remove("hidden");
            velocityGroup.classList.add("hidden");
          }
        });
      });

      document.getElementById("unit-system").addEventListener("change", (e) => {
        const system = e.target.value;
        const flowUnit = document.getElementById("flow-unit");
        const lengthUnit = document.getElementById("length-unit");
        const pressureUnit = document.getElementById("pressure-unit");
        const velocityUnit = document.getElementById("velocity-unit");

        if (system === "us") {
          flowUnit.value = "gpm";
          lengthUnit.value = "ft";
          pressureUnit.value = "psi";
          velocityUnit.value = "ft_s";
        } else {
          flowUnit.value = "m3h";
          lengthUnit.value = "m";
          pressureUnit.value = "kpa";
          velocityUnit.value = "m_s";
        }
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        [
          "flow-rate",
          "pipe-length",
          "velocity",
          "pressure-drop",
          "temperature",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        document.getElementById("unit-system").value = "us";
        document.getElementById("flow-unit").value = "gpm";
        document.getElementById("length-unit").value = "ft";
        document.getElementById("velocity-unit").value = "ft_s";
        document.getElementById("pressure-unit").value = "psi";
        document.getElementById("material").selectedIndex = 0;
        document.getElementById("temp-unit").value = "C";
        document.getElementById("results-container").innerHTML = `
      <div class="p-4 rounded-md bg-blue-50 border border-blue-100 text-sm text-blue-900">
        Enter flow, length and design criteria, then click <span class="font-semibold">Calculate pipe size</span> to see recommended diameter, velocity and pressure drop.
      </div>`;
      });

      function toSIFlow(value, unit) {
        const v = Number(value);
        if (!isFinite(v) || v <= 0) return NaN;
        switch (unit) {
          case "gpm":
            return v * 0.0000630902; // m³/s
          case "lps":
            return v / 1000; // L/s -> m³/s
          case "m3h":
            return v / 3600; // m³/h -> m³/s
          default:
            return NaN;
        }
      }

      function toSILength(value, unit) {
        const v = Number(value);
        if (!isFinite(v) || v <= 0) return NaN;
        return unit === "ft" ? v * 0.3048 : v;
      }

      function toSIVelocity(value, unit) {
        const v = Number(value);
        if (!isFinite(v) || v <= 0) return NaN;
        return unit === "ft_s" ? v * 0.3048 : v;
      }

      function toSIPressure(value, unit) {
        const v = Number(value);
        if (!isFinite(v) || v <= 0) return NaN;
        switch (unit) {
          case "psi":
            return v * 6894.757; // Pa
          case "kpa":
            return v * 1000; // Pa
          case "m":
            return RHO_WATER * G * v; // m head -> Pa
          default:
            return NaN;
        }
      }

      function waterViscosity(Tc) {
        // Simple empirical fit for dynamic viscosity of water in Pa·s, 0–100°C
        const T = Math.max(0, Math.min(100, Tc));
        const mu_cP = 2.414 * Math.pow(10, 247.8 / (T + 133.15)); // cP
        return mu_cP / 1000; // Pa·s
      }

      function swameeJain(eps, D, Re) {
        if (Re < 2000) {
          return 64 / Re; // laminar
        }
        const term = eps / (3.7 * D) + 5.74 / Math.pow(Re, 0.9);
        return 0.25 / Math.pow(Math.log10(term), 2);
      }

      // Nominal pipe sizes (inches) and Schedule 40/80 IDs (inches)
      const pipeTable = [
        { nps: 0.5, sch40: 0.622, sch80: 0.546 },
        { nps: 0.75, sch40: 0.824, sch80: 0.742 },
        { nps: 1, sch40: 1.049, sch80: 0.957 },
        { nps: 1.25, sch40: 1.38, sch80: 1.278 },
        { nps: 1.5, sch40: 1.61, sch80: 1.5 },
        { nps: 2, sch40: 2.067, sch80: 1.939 },
        { nps: 2.5, sch40: 2.469, sch80: 2.323 },
        { nps: 3, sch40: 3.068, sch80: 2.9 },
        { nps: 4, sch40: 4.026, sch80: 3.826 },
        { nps: 5, sch40: 5.047, sch80: 4.813 },
        { nps: 6, sch40: 6.065, sch80: 5.761 },
        { nps: 8, sch40: 7.981, sch80: 7.625 },
        { nps: 10, sch40: 10.02, sch80: 9.563 },
        { nps: 12, sch40: 11.938, sch80: 11.374 },
      ];

      function suggestPipe(D_required_m) {
        const D_req_in = D_required_m / 0.0254;
        let best = null;
        for (const row of pipeTable) {
          if (row.sch40 >= D_req_in) {
            best = { ...row, schedule: 40, id_in: row.sch40 };
            break;
          }
        }
        if (!best) {
          const last = pipeTable[pipeTable.length - 1];
          best = { ...last, schedule: 40, id_in: last.sch40 };
        }
        const alt = pipeTable.find((r) => r.nps === best.nps);
        const altID = alt ? alt.sch80 : null;
        return {
          nps: best.nps,
          sch40_id_in: best.sch40,
          sch80_id_in: altID,
          selected_id_m: best.id_in * 0.0254,
        };
      }

      function formatNumber(value, decimals = 3) {
        if (!isFinite(value)) return "—";
        if (Math.abs(value) >= 1000 || Math.abs(value) < 0.001) {
          return value.toExponential(2);
        }
        return value.toFixed(decimals);
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const Q = toSIFlow(
          document.getElementById("flow-rate").value,
          document.getElementById("flow-unit").value
        );
        const L = toSILength(
          document.getElementById("pipe-length").value,
          document.getElementById("length-unit").value
        );
        const eps_ft = parseFloat(document.getElementById("material").value);
        const eps_m = eps_ft * 0.3048;
        const tempVal = parseFloat(
          document.getElementById("temperature").value
        );
        const tempUnit = document.getElementById("temp-unit").value;
        const Tc = isFinite(tempVal)
          ? tempUnit === "F"
            ? ((tempVal - 32) * 5) / 9
            : tempVal
          : 20;
        const mu = waterViscosity(Tc);

        if (!isFinite(Q) || !isFinite(L)) {
          document.getElementById("results-container").innerHTML = `
        <div class="p-4 rounded-md bg-red-50 border border-red-200 text-sm text-red-800">
          Please enter valid positive values for <strong>flow rate</strong> and <strong>pipe length</strong>.
        </div>`;
          return;
        }

        let D_req_m;
        let designNote = "";

        if (currentMode === "velocity") {
          const Vmax = toSIVelocity(
            document.getElementById("velocity").value,
            document.getElementById("velocity-unit").value
          );
          if (!isFinite(Vmax)) {
            document.getElementById("results-container").innerHTML = `
          <div class="p-4 rounded-md bg-red-50 border border-red-200 text-sm text-red-800">
            Please enter a valid positive value for <strong>maximum velocity</strong>.
          </div>`;
            return;
          }
          D_req_m = Math.sqrt((4 * Q) / (Math.PI * Vmax));
          designNote = `Sized so that velocity ≤ ${formatNumber(Vmax, 2)} m/s.`;
        } else {
          const dP = toSIPressure(
            document.getElementById("pressure-drop").value,
            document.getElementById("pressure-unit").value
          );
          if (!isFinite(dP)) {
            document.getElementById("results-container").innerHTML = `
          <div class="p-4 rounded-md bg-red-50 border border-red-200 text-sm text-red-800">
            Please enter a valid positive value for <strong>allowable pressure drop</strong>.
          </div>`;
            return;
          }
          // Simple iteration on diameter to meet pressure drop
          let D_low = 0.005; // 5 mm
          let D_high = 1.0; // 1 m
          for (let i = 0; i < 40; i++) {
            const D_mid = 0.5 * (D_low + D_high);
            const A = (Math.PI * D_mid * D_mid) / 4;
            const V = Q / A;
            const Re = (RHO_WATER * V * D_mid) / mu;
            const f = swameeJain(eps_m, D_mid, Re);
            const dP_mid = f * (L / D_mid) * ((RHO_WATER * V * V) / 2);
            if (dP_mid > dP) {
              D_low = D_mid; // too much loss -> need bigger diameter
            } else {
              D_high = D_mid;
            }
          }
          D_req_m = D_high;
          designNote = `Sized so that pressure drop ≤ ${formatNumber(
            dP / 1000,
            2
          )} kPa over ${formatNumber(L, 1)} m.`;
        }

        const suggestion = suggestPipe(D_req_m);
        const D_use_m = suggestion.selected_id_m;
        const A_use = (Math.PI * D_use_m * D_use_m) / 4;
        const V_use = Q / A_use;
        const Re_use = (RHO_WATER * V_use * D_use_m) / mu;
        const f_use = swameeJain(eps_m, D_use_m, Re_use);
        const dP_use =
          f_use * (L / D_use_m) * ((RHO_WATER * V_use * V_use) / 2); // Pa
        const dP_psi = dP_use / 6894.757;
        const dP_kPa = dP_use / 1000;
        const head_m = dP_use / (RHO_WATER * G);

        const resultsHTML = `
      <div class="grid md:grid-cols-2 gap-4">
        <div class="p-4 rounded-md bg-gray-50 border border-gray-200">
          <h3 class="text-sm font-semibold mb-2">Recommended pipe size</h3>
          <p class="text-sm mb-1"><span class="font-medium">Nominal size (NPS):</span> ${
            suggestion.nps
          }"</p>
          <p class="text-sm mb-1"><span class="font-medium">Schedule 40 ID:</span> ${formatNumber(
            suggestion.sch40_id_in,
            3
          )} in</p>
          <p class="text-sm mb-1"><span class="font-medium">Schedule 80 ID:</span> ${
            suggestion.sch80_id_in
              ? formatNumber(suggestion.sch80_id_in, 3) + " in"
              : "—"
          }</p>
          <p class="text-sm mb-1"><span class="font-medium">Used ID for calculations:</span> ${formatNumber(
            D_use_m,
            4
          )} m (${formatNumber(D_use_m / 0.0254, 3)} in)</p>
          <p class="text-xs text-gray-500 mt-2">${designNote}</p>
        </div>
        <div class="p-4 rounded-md bg-gray-50 border border-gray-200">
          <h3 class="text-sm font-semibold mb-2">Hydraulic performance</h3>
          <p class="text-sm mb-1"><span class="font-medium">Velocity:</span> ${formatNumber(
            V_use,
            2
          )} m/s (${formatNumber(V_use / 0.3048, 2)} ft/s)</p>
          <p class="text-sm mb-1"><span class="font-medium">Reynolds number:</span> ${formatNumber(
            Re_use,
            0
          )}</p>
          <p class="text-sm mb-1"><span class="font-medium">Friction factor (Darcy):</span> ${formatNumber(
            f_use,
            4
          )}</p>
          <p class="text-sm mb-1"><span class="font-medium">Pressure drop:</span> ${formatNumber(
            dP_kPa,
            2
          )} kPa (${formatNumber(dP_psi, 2)} psi)</p>
          <p class="text-sm mb-1"><span class="font-medium">Head loss:</span> ${formatNumber(
            head_m,
            2
          )} m (${formatNumber(head_m * 3.28084, 2)} ft)</p>
        </div>
      </div>
      <div class="mt-4 p-3 rounded-md bg-yellow-50 border border-yellow-200 text-xs text-yellow-900">
        <p class="mb-1"><strong>Note:</strong> This is a hydraulic sizing tool for clean water in straight pipe. Always verify final selections against applicable codes, allowable working pressure, temperature limits and manufacturer data.</p>
      </div>
    `;

        document.getElementById("results-container").innerHTML = resultsHTML;
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
