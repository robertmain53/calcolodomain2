    <script>
      // Core calculations
      function phToH(ph) {
        return Math.pow(10, -ph);
      }

      function formatSci(value) {
        if (!isFinite(value) || value <= 0) return "—";
        const exp = Math.floor(Math.log10(value));
        const mant = value / Math.pow(10, exp);
        return mant.toFixed(2) + " × 10^" + exp;
      }

      function updateCalculator() {
        const refPhInput = document.getElementById("refPh");
        const curPhInput = document.getElementById("curPh");
        const curPhSlider = document.getElementById("curPhSlider");
        const co2Slider = document.getElementById("co2ppm");

        let refPh = parseFloat(refPhInput.value);
        let curPh = parseFloat(curPhInput.value);
        const co2 = parseFloat(co2Slider.value);

        if (!isFinite(refPh)) refPh = 8.2;
        if (!isFinite(curPh)) curPh = 8.1;

        // Clamp to reasonable range
        refPh = Math.min(Math.max(refPh, 6.5), 9.0);
        curPh = Math.min(Math.max(curPh, 6.5), 9.0);

        refPhInput.value = refPh.toFixed(2);
        curPhInput.value = curPh.toFixed(2);
        curPhSlider.value = curPh.toFixed(2);

        const refH = phToH(refPh);
        const curH = phToH(curPh);

        const deltaPh = curPh - refPh;
        const acidityFactor = Math.pow(10, -deltaPh);
        const acidityPercent = (acidityFactor - 1) * 100;

        document.getElementById("refH").textContent = formatSci(refH);
        document.getElementById("curH").textContent = formatSci(curH);

        const hChange = ((curH - refH) / refH) * 100;
        const hChangeEl = document.getElementById("hChange");
        const hBadge = document.getElementById("hChangeBadge");

        if (isFinite(hChange)) {
          const sign = hChange >= 0 ? "+" : "";
          hChangeEl.textContent = sign + hChange.toFixed(1) + "%";
          hBadge.textContent = hChange >= 0 ? "More acidic" : "Less acidic";
          hBadge.className =
            "result-badge ml-1 " +
            (hChange >= 0
              ? "bg-red-100 text-red-700"
              : "bg-green-100 text-green-700");
        } else {
          hChangeEl.textContent = "—";
          hBadge.textContent = "";
        }

        document.getElementById("deltaPh").textContent = deltaPh.toFixed(2);
        document.getElementById("acidityFactor").textContent =
          acidityFactor.toFixed(2);
        document.getElementById("acidityPercent").textContent =
          (acidityPercent >= 0 ? "+" : "") + acidityPercent.toFixed(1) + "%";

        // Simple illustrative CO2–pH relationship
        const co2Label = document.getElementById("co2Label");
        const co2PhEstimate = document.getElementById("co2PhEstimate");

        co2Label.textContent = co2.toFixed(0);

        const co2Ref = 280; // ppm
        const pH0 = 8.2;
        const k = 0.1 / Math.log10(420 / 280); // choose k so 420 ppm -> ~0.10 pH drop
        const phApprox = pH0 - k * Math.log10(co2 / co2Ref);

        co2PhEstimate.textContent = phApprox.toFixed(2);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const refPhInput = document.getElementById("refPh");
        const curPhInput = document.getElementById("curPh");
        const curPhSlider = document.getElementById("curPhSlider");
        const co2Slider = document.getElementById("co2ppm");

        refPhInput.addEventListener("input", updateCalculator);
        curPhInput.addEventListener("input", updateCalculator);
        curPhSlider.addEventListener("input", function () {
          document.getElementById("curPh").value = this.value;
          updateCalculator();
        });
        co2Slider.addEventListener("input", updateCalculator);

        updateCalculator();
      });
    </script>

