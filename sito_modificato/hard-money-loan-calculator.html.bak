    <script>
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        const v = Math.round(value);
        return v.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }
      function fmtPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value.replace(/,/g, ""));
        return isNaN(v) ? 0 : v;
      }

      function calculateHardMoney() {
        const purchase = getNumber("purchasePrice");
        const arv = getNumber("arv");
        const rehab = getNumber("rehabBudget");
        const holdingMonths = Math.max(1, getNumber("holdingMonths"));

        const basis = document.getElementById("loanBasis").value;
        const ltvPct = getNumber("ltv");
        const ratePct = getNumber("interestRate");
        const pointsPct = getNumber("points");
        const termMonths = Math.max(1, getNumber("loanTerm"));

        const closingCosts = getNumber("closingCosts");
        const monthlyTaxes = getNumber("monthlyTaxes");
        const otherMonthly = getNumber("otherMonthly");
        const sellingCostPct = getNumber("sellingCostPct");

        const totalCost = purchase + rehab;
        const ltv = ltvPct / 100;
        const annualRate = ratePct / 100;
        const points = pointsPct / 100;
        const sellPct = sellingCostPct / 100;

        let basisValue = purchase;
        if (basis === "arv") basisValue = arv;
        else if (basis === "totalCost") basisValue = totalCost;

        let rawLoan = basisValue * ltv;
        let loanAmount = Math.min(rawLoan, totalCost);
        if (!isFinite(loanAmount) || loanAmount < 0) loanAmount = 0;

        const monthlyRate = annualRate / 12;
        const monthlyPayment = loanAmount * monthlyRate;
        const actualMonths = Math.min(holdingMonths, termMonths);
        const totalInterest = monthlyPayment * actualMonths;

        const pointsCost = loanAmount * points;

        let loanToPurchase = Math.min(loanAmount, purchase);
        let loanToRehab = Math.max(0, loanAmount - loanToPurchase);
        loanToRehab = Math.min(loanToRehab, rehab);

        const downPayment = Math.max(0, purchase - loanToPurchase);
        const unfundedRehab = Math.max(0, rehab - loanToRehab);

        const totalClosing = closingCosts + pointsCost;
        const cashToClose = downPayment + unfundedRehab + totalClosing;

        const monthlyCarrying = monthlyTaxes + otherMonthly;
        const carryingCosts = monthlyCarrying * holdingMonths;

        const totalCashInvested = cashToClose + carryingCosts;

        const salePrice = arv;
        const sellingCosts = salePrice * sellPct;

        const totalProjectCost =
          purchase + rehab + totalClosing + totalInterest + carryingCosts;
        const profit = salePrice - sellingCosts - totalProjectCost;

        const profitMargin = salePrice > 0 ? profit / salePrice : 0;
        const roi = totalCashInvested > 0 ? profit / totalCashInvested : 0;
        const annualizedRoi =
          roi > -0.99 && holdingMonths > 0
            ? Math.pow(1 + roi, 12 / holdingMonths) - 1
            : 0;

        document.getElementById("loanAmountOut").textContent =
          fmtCurrency(loanAmount);
        document.getElementById("monthlyPaymentOut").textContent =
          fmtCurrency(monthlyPayment);
        document.getElementById("totalInterestOut").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("pointsCostOut").textContent =
          fmtCurrency(pointsCost);

        document.getElementById("downPaymentOut").textContent =
          fmtCurrency(downPayment);
        document.getElementById("unfundedRehabOut").textContent =
          fmtCurrency(unfundedRehab);
        document.getElementById("totalClosingOut").textContent =
          fmtCurrency(totalClosing);
        document.getElementById("cashToCloseOut").textContent =
          fmtCurrency(cashToClose);
        document.getElementById("totalCashInvestedOut").textContent =
          fmtCurrency(totalCashInvested);

        document.getElementById("sellingCostsOut").textContent =
          fmtCurrency(sellingCosts);
        document.getElementById("totalProjectCostOut").textContent =
          fmtCurrency(totalProjectCost);
        document.getElementById("profitOut").textContent = fmtCurrency(profit);
        document.getElementById("profitMarginOut").textContent =
          fmtPercent(profitMargin);
        document.getElementById("roiOut").textContent = fmtPercent(roi);
        document.getElementById("annualizedRoiOut").textContent =
          fmtPercent(annualizedRoi);
      }

      document.addEventListener("DOMContentLoaded", () => {
        const ids = [
          "purchasePrice",
          "arv",
          "rehabBudget",
          "holdingMonths",
          "loanBasis",
          "ltv",
          "interestRate",
          "points",
          "loanTerm",
          "closingCosts",
          "monthlyTaxes",
          "otherMonthly",
          "sellingCostPct",
        ];
        ids.forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          el.addEventListener("input", calculateHardMoney);
          el.addEventListener("change", calculateHardMoney);
        });

        document.getElementById("resetBtn").addEventListener("click", () => {
          document.getElementById("purchasePrice").value = 200000;
          document.getElementById("arv").value = 300000;
          document.getElementById("rehabBudget").value = 50000;
          document.getElementById("holdingMonths").value = 9;
          document.getElementById("loanBasis").value = "purchase";
          document.getElementById("ltv").value = 75;
          document.getElementById("interestRate").value = 11;
          document.getElementById("points").value = 2;
          document.getElementById("loanTerm").value = 12;
          document.getElementById("closingCosts").value = 4000;
          document.getElementById("monthlyTaxes").value = 350;
          document.getElementById("otherMonthly").value = 150;
          document.getElementById("sellingCostPct").value = 8;
          calculateHardMoney();
        });

        calculateHardMoney();
      });

