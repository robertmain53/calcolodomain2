      // calculator logic
      const shapeSelect = document.getElementById('shape');
      const shapeFields = document.getElementById('shape-fields');
      const calcBtn = document.getElementById('calc-btn');
      const resetBtn = document.getElementById('reset-btn');
      const resultPanel = document.getElementById('result-panel');
      const resultText = document.getElementById('result-text');
      const resultAlt = document.getElementById('result-alt');
      const unitSelect = document.getElementById('unit');

      function renderFields(shape) {
        const fieldHtml = {
          rectangle: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="rect-width">Width (w)</label>
              <input type="number" id="rect-width" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 5" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="rect-height">Height (h)</label>
              <input type="number" id="rect-height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
          `,
          triangle: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="tri-base">Base (b)</label>
              <input type="number" id="tri-base" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 6" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="tri-height">Height (h)</label>
              <input type="number" id="tri-height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
          `,
          circle: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="circle-radius">Radius (r)</label>
              <input type="number" id="circle-radius" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 2.5" min="0" step="any">
            </div>
          `,
          trapezoid: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="trap-a">Base 1 (a)</label>
              <input type="number" id="trap-a" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 5" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="trap-b">Base 2 (b)</label>
              <input type="number" id="trap-b" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="trap-h">Height (h)</label>
              <input type="number" id="trap-h" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
          `,
          parallelogram: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="par-base">Base (b)</label>
              <input type="number" id="par-base" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 5" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="par-height">Height (h)</label>
              <input type="number" id="par-height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 2.5" min="0" step="any">
            </div>
          `,
          ellipse: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="ell-a">Semi-major axis (a)</label>
              <input type="number" id="ell-a" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 3" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="ell-b">Semi-minor axis (b)</label>
              <input type="number" id="ell-b" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 2" min="0" step="any">
            </div>
          `,
          sector: `
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="sec-r">Radius (r)</label>
              <input type="number" id="sec-r" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1" for="sec-angle">Angle (°)</label>
              <input type="number" id="sec-angle" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 60" min="0" step="any">
            </div>
          `
        };

        shapeFields.innerHTML = fieldHtml[shape] || fieldHtml['rectangle'];
      }

      shapeSelect.addEventListener('change', (e) => {
        renderFields(e.target.value);
        resultPanel.classList.add('hidden');
      });

      function calcArea() {
        const shape = shapeSelect.value;
        const unit = unitSelect.value;
        let area = null;
        let formulaUsed = '';

        if (shape === 'rectangle') {
          const w = parseFloat(document.getElementById('rect-width')?.value);
          const h = parseFloat(document.getElementById('rect-height')?.value);
          if (isNaN(w) || isNaN(h) || w <= 0 || h <= 0) return null;
          area = w * h;
          formulaUsed = 'A = w × h';
        }
        if (shape === 'triangle') {
          const b = parseFloat(document.getElementById('tri-base')?.value);
          const h = parseFloat(document.getElementById('tri-height')?.value);
          if (isNaN(b) || isNaN(h) || b <= 0 || h <= 0) return null;
          area = (b * h) / 2;
          formulaUsed = 'A = (b × h) / 2';
        }
        if (shape === 'circle') {
          const r = parseFloat(document.getElementById('circle-radius')?.value);
          if (isNaN(r) || r <= 0) return null;
          area = Math.PI * r * r;
          formulaUsed = 'A = πr²';
        }
        if (shape === 'trapezoid') {
          const a = parseFloat(document.getElementById('trap-a')?.value);
          const b = parseFloat(document.getElementById('trap-b')?.value);
          const h = parseFloat(document.getElementById('trap-h')?.value);
          if ([a,b,h].some(x => isNaN(x) || x <= 0)) return null;
          area = ((a + b) * h) / 2;
          formulaUsed = 'A = ((a + b) × h) / 2';
        }
        if (shape === 'parallelogram') {
          const b = parseFloat(document.getElementById('par-base')?.value);
          const h = parseFloat(document.getElementById('par-height')?.value);
          if (isNaN(b) || isNaN(h) || b <= 0 || h <= 0) return null;
          area = b * h;
          formulaUsed = 'A = b × h';
        }
        if (shape === 'ellipse') {
          const a = parseFloat(document.getElementById('ell-a')?.value);
          const b = parseFloat(document.getElementById('ell-b')?.value);
          if (isNaN(a) || isNaN(b) || a <= 0 || b <= 0) return null;
          area = Math.PI * a * b;
          formulaUsed = 'A = πab';
        }
        if (shape === 'sector') {
          const r = parseFloat(document.getElementById('sec-r')?.value);
          const angle = parseFloat(document.getElementById('sec-angle')?.value);
          if (isNaN(r) || isNaN(angle) || r <= 0 || angle <= 0) return null;
          area = Math.PI * r * r * (angle / 360);
          formulaUsed = 'A = πr² × (θ/360)';
        }

        if (area === null) return null;
        return { area, unit, formulaUsed };
      }

      calcBtn.addEventListener('click', () => {
        const res = calcArea();
        if (!res) {
          resultPanel.classList.remove('hidden');
          resultText.textContent = 'Please enter valid positive numbers.';
          resultAlt.textContent = '';
          return;
        }
        const { area, unit, formulaUsed } = res;
        const formatted = area.toLocaleString(undefined, { maximumFractionDigits: 6 });
        resultPanel.classList.remove('hidden');
        resultText.textContent = `${formatted} ${unit}²`;
        resultAlt.textContent = `Formula used: ${formulaUsed}`;
      });

      resetBtn.addEventListener('click', () => {
        renderFields('rectangle');
        shapeSelect.value = 'rectangle';
        unitSelect.value = 'm';
        resultPanel.classList.add('hidden');
      });

      // init
      renderFields('rectangle');

      document.querySelectorAll('[data-faq-btn]').forEach(btn => {
        btn.addEventListener('click', () => {
          const panel = btn.parentElement.querySelector('[data-faq-panel]');
          panel.classList.toggle('hidden');
        });
      });
    </script>
    
