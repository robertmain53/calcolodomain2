    <script>
      // Saffir-Simpson logic
      (function () {
        const input = document.getElementById("wind-speed");
        const unitSelect = document.getElementById("wind-unit");
        const btnCalc = document.getElementById("btn-calc");
        const btnClear = document.getElementById("btn-clear");
        const resultCard = document.getElementById("result-card");
        const categoryLabel = document.getElementById("category-label");
        const categoryShort = document.getElementById("category-short");
        const categoryBadge = document.getElementById("category-badge");
        const normalizedWind = document.getElementById("normalized-wind");
        const normalizedAlt = document.getElementById("normalized-alt");
        const damagePotential = document.getElementById("damage-potential");
        const impactText = document.getElementById("impact-text");
        const safetyList = document.getElementById("safety-list");

        const quickButtons = document.querySelectorAll("button[data-quick]");

        function toMph(value, unit) {
          const v = Number(value);
          if (!isFinite(v)) return NaN;
          switch (unit) {
            case "mph":
              return v;
            case "kmh":
              return v / 1.609344;
            case "kt":
              return v * 1.150779;
            case "ms":
              return v * 2.236936;
            default:
              return NaN;
          }
        }

        function fromMph(mph) {
          return {
            mph: mph,
            kmh: mph * 1.609344,
            kt: mph / 1.150779,
            ms: mph / 2.236936,
          };
        }

        function classify(mph) {
          if (mph < 0) return null;

          if (mph < 39) {
            return {
              type: "sub",
              label: "Below Tropical Storm",
              short: "< TS",
              color: "bg-gray-100 text-gray-800 border border-gray-300",
              damage: "Below tropical-storm-force winds",
              impact:
                "Winds are below tropical-storm-force. While strong gusts may still cause localized issues, this is not classified as a tropical storm or hurricane on the Saffir-Simpson scale.",
              safety: [
                "Monitor official forecasts if a tropical system is nearby.",
                "Secure loose outdoor items if gusty conditions are expected.",
              ],
            };
          } else if (mph < 74) {
            return {
              type: "ts",
              label: "Tropical Storm (Not a Hurricane)",
              short: "TS",
              color: "bg-sky-100 text-sky-800 border border-sky-300",
              damage: "Strong winds, some damage possible",
              impact:
                "Tropical-storm-force winds can down tree branches, cause scattered power outages, and produce dangerous coastal and marine conditions.",
              safety: [
                "Avoid coastal waters and follow small craft advisories.",
                "Secure outdoor objects and prepare for possible power outages.",
              ],
            };
          } else if (mph <= 95) {
            return {
              type: "cat1",
              label: "Category 1 Hurricane",
              short: "Cat 1",
              color: "bg-blue-100 text-blue-800 border border-blue-300",
              damage: "Very dangerous winds will produce some damage",
              impact:
                "Damage to roofs, shingles, vinyl siding, and gutters. Large branches may snap; shallow-rooted trees may topple. Power outages likely in affected areas.",
              safety: [
                "Follow local guidance; evacuate if ordered, especially for surge-prone areas.",
                "Prepare for several days without power and limited services.",
              ],
            };
          } else if (mph <= 110) {
            return {
              type: "cat2",
              label: "Category 2 Hurricane",
              short: "Cat 2",
              color: "bg-green-100 text-green-800 border border-green-300",
              damage: "Extremely dangerous winds will cause extensive damage",
              impact:
                "Major roof and siding damage to well-constructed homes. Many shallow-rooted trees snapped or uprooted. Near-total power loss expected, possibly lasting days to weeks.",
              safety: [
                "Strongly consider evacuation if advised, especially near the coast.",
                "Reinforce windows and doors; move to a safe interior room during peak winds.",
              ],
            };
          } else if (mph <= 129) {
            return {
              type: "cat3",
              label: "Category 3 Hurricane (Major)",
              short: "Cat 3",
              color: "bg-yellow-100 text-yellow-800 border border-yellow-300",
              damage: "Devastating damage will occur",
              impact:
                "Well-built framed homes may incur major roof and gable failures. Many trees snapped or uprooted; roads blocked. Electricity and water likely unavailable for days to weeks.",
              safety: [
                "Follow all evacuation orders from local officials.",
                "Expect long-duration outages; stock food, water, and medications for at least a week.",
              ],
            };
          } else if (mph <= 156) {
            return {
              type: "cat4",
              label: "Category 4 Hurricane (Major)",
              short: "Cat 4",
              color: "bg-orange-100 text-orange-800 border border-orange-300",
              damage: "Catastrophic damage will occur",
              impact:
                "Severe damage to most homes, with loss of most of the roof structure and/or some exterior walls. Most trees snapped or uprooted; power poles down. Areas may be uninhabitable for weeks to months.",
              safety: [
                "Evacuate if at all possible when ordered; do not ride out the storm in evacuation zones.",
                "Plan for long-term disruption of utilities and services.",
              ],
            };
          } else {
            return {
              type: "cat5",
              label: "Category 5 Hurricane (Major)",
              short: "Cat 5",
              color: "bg-red-100 text-red-800 border border-red-300",
              damage: "Catastrophic damage will occur",
              impact:
                "A high percentage of framed homes will be destroyed, with total roof failure and wall collapse. Fallen trees and power poles will isolate residential areas. Large regions may be uninhabitable for weeks or months.",
              safety: [
                "Evacuate well ahead of time if you are in an evacuation or surge-prone zone.",
                "Expect extreme, life-threatening conditions; survival may not be possible in poorly built structures.",
              ],
            };
          }
        }

        function updateUI() {
          const raw = input.value.trim();
          if (raw === "") {
            resultCard.classList.add("hidden");
            return;
          }
          const mph = toMph(raw, unitSelect.value);
          if (!isFinite(mph) || mph < 0) {
            alert("Please enter a valid non-negative wind speed.");
            return;
          }

          const cat = classify(mph);
          if (!cat) {
            resultCard.classList.add("hidden");
            return;
          }

          // Normalize and convert
          const roundedMph = Math.round(mph * 10) / 10;
          const conv = fromMph(roundedMph);

          categoryLabel.textContent = cat.label;
          categoryShort.textContent = cat.short;
          categoryBadge.className = "category-badge " + cat.color;
          normalizedWind.textContent = `${roundedMph.toFixed(1)} mph`;
          normalizedAlt.textContent = `≈ ${conv.kmh.toFixed(
            1
          )} km/h · ${conv.kt.toFixed(1)} kt · ${conv.ms.toFixed(1)} m/s`;
          damagePotential.textContent = cat.damage;
          impactText.textContent = cat.impact;

          // Safety list
          safetyList.innerHTML = "";
          cat.safety.forEach((item) => {
            const li = document.createElement("li");
            li.textContent = item;
            safetyList.appendChild(li);
          });

          resultCard.classList.remove("hidden");
        }

        btnCalc.addEventListener("click", updateUI);
        input.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            updateUI();
          }
        });

        btnClear.addEventListener("click", () => {
          input.value = "";
          resultCard.classList.add("hidden");
          input.focus();
        });

        quickButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const v = btn.getAttribute("data-quick");
            unitSelect.value = "mph";
            input.value = v;
            updateUI();
          });
        });
      })();
    </script>

