    <script>
      // --- 2024-2025 approximate standard deductions ---
      const STANDARD_DEDUCTION = {
        single: 14600,
        mfj: 29200,
        mfs: 14600,
        hoh: 21900,
      };

      // --- 2024-2025 approximate tax brackets (simplified) ---
      // Each array: [{upTo, rate}, ...] where upTo is upper bound of bracket
      const TAX_BRACKETS = {
        single: [
          { upTo: 11600, rate: 0.1 },
          { upTo: 47150, rate: 0.12 },
          { upTo: 100525, rate: 0.22 },
          { upTo: 191950, rate: 0.24 },
          { upTo: 243725, rate: 0.32 },
          { upTo: 609350, rate: 0.35 },
          { upTo: Infinity, rate: 0.37 },
        ],
        mfj: [
          { upTo: 23200, rate: 0.1 },
          { upTo: 94300, rate: 0.12 },
          { upTo: 201050, rate: 0.22 },
          { upTo: 383900, rate: 0.24 },
          { upTo: 487450, rate: 0.32 },
          { upTo: 731200, rate: 0.35 },
          { upTo: Infinity, rate: 0.37 },
        ],
        mfs: [
          { upTo: 11600, rate: 0.1 },
          { upTo: 47150, rate: 0.12 },
          { upTo: 100525, rate: 0.22 },
          { upTo: 191950, rate: 0.24 },
          { upTo: 243725, rate: 0.32 },
          { upTo: 365600, rate: 0.35 },
          { upTo: Infinity, rate: 0.37 },
        ],
        hoh: [
          { upTo: 16550, rate: 0.1 },
          { upTo: 63100, rate: 0.12 },
          { upTo: 100500, rate: 0.22 },
          { upTo: 191950, rate: 0.24 },
          { upTo: 243700, rate: 0.32 },
          { upTo: 609350, rate: 0.35 },
          { upTo: Infinity, rate: 0.37 },
        ],
      };

      function parseNumber(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value.replace(/,/g, ""));
        return isNaN(v) ? 0 : v;
      }

      function formatCurrency(value) {
        const sign = value < 0 ? "-" : "";
        const abs = Math.abs(value);
        return (
          sign +
          abs.toLocaleString(undefined, {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
          })
        );
      }

      function computeTaxFromBrackets(taxableIncome, status) {
        const brackets = TAX_BRACKETS[status] || TAX_BRACKETS.single;
        let remaining = taxableIncome;
        let lastLimit = 0;
        let tax = 0;

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, bracket.upTo - lastLimit);
          if (span > 0) {
            tax += span * bracket.rate;
            remaining -= span;
            lastLimit = bracket.upTo;
          }
        }
        return Math.max(0, tax);
      }

      function estimateChildTaxCredit(agi, dependents, status) {
        if (dependents <= 0) return 0;
        const basePerChild = 2000;
        const baseCredit = dependents * basePerChild;

        // Simplified phase-out thresholds
        let threshold = 200000;
        if (status === "mfj") threshold = 400000;

        if (agi <= threshold) return baseCredit;

        const excess = agi - threshold;
        const reduction = Math.floor(excess / 1000) * 50; // $50 per $1,000 over threshold
        return Math.max(0, baseCredit - reduction);
      }

      function updateDeductionVisibility() {
        const type =
          document.querySelector('input[name="deductionType"]:checked')
            ?.value || "standard";
        const wrapper = document.getElementById("itemizedWrapper");
        if (!wrapper) return;
        wrapper.classList.toggle("hidden", type !== "itemized");
      }

      document.addEventListener("DOMContentLoaded", () => {
        updateDeductionVisibility();
        document
          .querySelectorAll('input[name="deductionType"]')
          .forEach((radio) => {
            radio.addEventListener("change", updateDeductionVisibility);
          });

        const btn = document.getElementById("calculateBtn");
        if (!btn) return;

        btn.addEventListener("click", () => {
          const status =
            document.getElementById("filingStatus").value || "single";
          const agePrimary = parseNumber("agePrimary");
          const ageSpouse = parseNumber("ageSpouse");
          const dependents =
            parseInt(document.getElementById("dependents").value || "0", 10) ||
            0;

          const wages = parseNumber("wages");
          const otherIncome = parseNumber("otherIncome");
          const preTaxContrib = parseNumber("preTaxContrib");
          const otherCredits = parseNumber("otherCredits");
          const withholding = parseNumber("withholding");

          const totalIncome = Math.max(0, wages + otherIncome);
          const agi = Math.max(0, totalIncome - preTaxContrib);

          const deductionType =
            document.querySelector('input[name="deductionType"]:checked')
              ?.value || "standard";
          let deduction =
            STANDARD_DEDUCTION[status] || STANDARD_DEDUCTION.single;
          if (deductionType === "itemized") {
            const itemized = parseNumber("itemized");
            deduction = Math.max(0, itemized);
          }

          // Additional standard deduction for age 65+ (simplified)
          let extraStd = 0;
          const extraPerPerson = 1600; // approximate
          if (agePrimary >= 65) extraStd += extraPerPerson;
          if ((status === "mfj" || status === "mfs") && ageSpouse >= 65)
            extraStd += extraPerPerson;
          deduction += extraStd;

          const taxableIncome = Math.max(0, agi - deduction);
          const taxBeforeCredits = computeTaxFromBrackets(
            taxableIncome,
            status
          );

          const ctc = estimateChildTaxCredit(agi, dependents, status);
          const totalCredits = Math.min(taxBeforeCredits, ctc + otherCredits); // non-refundable assumption
          const taxAfterCredits = Math.max(0, taxBeforeCredits - totalCredits);

          const net = withholding - taxAfterCredits;
          const effectiveRate =
            totalIncome > 0 ? (taxAfterCredits / totalIncome) * 100 : 0;

          // Update UI
          document.getElementById("totalIncome").textContent =
            "$" + formatCurrency(totalIncome);
          document.getElementById("taxableIncome").textContent =
            "$" + formatCurrency(taxableIncome);
          document.getElementById("estimatedTax").textContent =
            "$" + formatCurrency(taxAfterCredits);
          document.getElementById("effectiveRate").textContent =
            effectiveRate.toFixed(1) + "%";
          document.getElementById("totalCredits").textContent =
            "$" + formatCurrency(totalCredits);
          document.getElementById("withheldDisplay").textContent =
            "$" + formatCurrency(withholding);

          const refundEl = document.getElementById("refundAmount");
          const labelEl = document.getElementById("refundLabel");

          if (net > 0) {
            refundEl.textContent = "$" + formatCurrency(net);
            refundEl.classList.remove("text-red-600");
            refundEl.classList.add("text-green-600");
            labelEl.textContent = "Estimated federal tax refund";
          } else if (net < 0) {
            refundEl.textContent = "$" + formatCurrency(-net);
            refundEl.classList.remove("text-green-600");
            refundEl.classList.add("text-red-600");
            labelEl.textContent = "Estimated amount you may owe when you file";
          } else {
            refundEl.textContent = "$0";
            refundEl.classList.remove("text-green-600", "text-red-600");
            labelEl.textContent =
              "You are estimated to break even (no refund, no amount owed).";
          }
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
