    <script>
      // Slider outputs
      const avgIncomeSlider = document.getElementById("avgIncomePercent");
      const avgIncomeOutput = document.getElementById("avgIncomePercentOutput");
      const futureIncomeSlider = document.getElementById("futureIncomePercent");
      const futureIncomeOutput = document.getElementById(
        "futureIncomePercentOutput"
      );

      function updateSliderOutputs() {
        avgIncomeOutput.textContent = avgIncomeSlider.value + "%";
        futureIncomeOutput.textContent = futureIncomeSlider.value + "%";
      }
      avgIncomeSlider.addEventListener("input", updateSliderOutputs);
      futureIncomeSlider.addEventListener("input", updateSliderOutputs);
      updateSliderOutputs();

      // Auto-adjust access factor when pension type changes (keep user override possible)
      const pensionTypeSelect = document.getElementById("pensionType");
      const accessFactorInput = document.getElementById("accessFactor");
      pensionTypeSelect.addEventListener("change", () => {
        // Do not change access factor automatically; user controls early/late retirement.
      });

      // Calculation logic
      function calculatePension() {
        const currentAge =
          parseFloat(document.getElementById("currentAge").value) || 0;
        const retirementAge =
          parseFloat(document.getElementById("retirementAge").value) || 0;
        const yearsContributed = Math.max(
          0,
          parseFloat(document.getElementById("yearsContributed").value) || 0
        );
        const avgIncomePct =
          Math.max(0, parseFloat(avgIncomeSlider.value) || 0) / 100;
        const futureIncomePct =
          Math.max(0, parseFloat(futureIncomeSlider.value) || 0) / 100;
        const currentPensionValue = Math.max(
          0,
          parseFloat(document.getElementById("currentPensionValue").value) || 0
        );
        const pensionTypeFactor = Math.max(
          0,
          parseFloat(document.getElementById("pensionType").value) || 1
        );
        const accessFactor = Math.max(
          0,
          parseFloat(accessFactorInput.value) || 1
        );

        // Remaining working years (cannot be negative)
        let remainingYears = Math.max(0, retirementAge - currentAge);
        // Do not allow remaining years to be less than 0 or more than 50 for sanity
        remainingYears = Math.min(50, remainingYears);

        // Earnings points
        const pastPoints = yearsContributed * avgIncomePct;
        const futurePoints = remainingYears * futureIncomePct;
        const totalPoints = pastPoints + futurePoints;

        // Pension calculation
        const monthlyPension =
          totalPoints * currentPensionValue * pensionTypeFactor * accessFactor;
        const annualPension = monthlyPension * 12;

        // Update UI
        document.getElementById("remainingYears").textContent =
          remainingYears.toFixed(0);
        document.getElementById("pastPoints").textContent =
          pastPoints.toFixed(2);
        document.getElementById("futurePoints").textContent =
          futurePoints.toFixed(2);
        document.getElementById("totalPoints").textContent =
          totalPoints.toFixed(2);
        document.getElementById("monthlyPension").textContent =
          "€" + monthlyPension.toFixed(0).toLocaleString("de-DE");
        document.getElementById("annualPension").textContent =
          "€" + annualPension.toFixed(0).toLocaleString("de-DE");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculatePension);

      // Recalculate on key changes for a more interactive feel
      [
        "currentAge",
        "retirementAge",
        "yearsContributed",
        "currentPensionValue",
        "pensionType",
        "accessFactor",
      ].forEach((id) => {
        const el = document.getElementById(id);
        el.addEventListener("change", calculatePension);
        el.addEventListener("blur", calculatePension);
      });
      avgIncomeSlider.addEventListener("change", calculatePension);
      futureIncomeSlider.addEventListener("change", calculatePension);

      // Initial calculation
      calculatePension();
    </script>

