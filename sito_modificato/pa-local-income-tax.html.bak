    <script>
      // Helper: format currency
      function formatCurrency(value) {
        return value.toLocaleString("en-US", {
          minimumFractionDigits: 2,
          maximumFractionDigits: 2,
        });
      }

      // Update resident total rate when components change
      function updateResidentTotalRate() {
        const muni =
          parseFloat(document.getElementById("residentMunicipalRate").value) ||
          0;
        const school =
          parseFloat(document.getElementById("residentSchoolRate").value) || 0;
        const total = muni + school;
        document.getElementById("residentTotalRate").value = total.toFixed(2);
      }

      document
        .getElementById("residentMunicipalRate")
        .addEventListener("input", updateResidentTotalRate);
      document
        .getElementById("residentSchoolRate")
        .addEventListener("input", updateResidentTotalRate);

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const wageInput = parseFloat(
            document.getElementById("wageAmount").value
          );
          const freq = document.getElementById("payFrequency").value;

          if (!wageInput || wageInput <= 0) {
            alert("Please enter a positive earned income amount.");
            return;
          }

          // Annualize income
          let annualIncome = wageInput;
          let perPayLabel = "Per year";
          let periodsPerYear = 1;

          switch (freq) {
            case "monthly":
              annualIncome = wageInput * 12;
              perPayLabel = "Per month";
              periodsPerYear = 12;
              break;
            case "biweekly":
              annualIncome = wageInput * 26;
              perPayLabel = "Per biweekly paycheck";
              periodsPerYear = 26;
              break;
            case "weekly":
              annualIncome = wageInput * 52;
              perPayLabel = "Per weekly paycheck";
              periodsPerYear = 52;
              break;
            default:
              perPayLabel = "Per year (single payment)";
              periodsPerYear = 1;
          }

          const resMuniRatePct =
            parseFloat(
              document.getElementById("residentMunicipalRate").value
            ) || 0;
          const resSchoolRatePct =
            parseFloat(document.getElementById("residentSchoolRate").value) ||
            0;
          const workNonResRatePct =
            parseFloat(document.getElementById("workNonResidentRate").value) ||
            0;

          const resTotalPct = resMuniRatePct + resSchoolRatePct;
          document.getElementById("residentTotalRate").value =
            resTotalPct.toFixed(2);

          const rRes = resTotalPct / 100;
          const rWork = workNonResRatePct / 100;

          // Effective rate is the higher of resident or work non-resident
          const rTotal = Math.max(rRes, rWork);
          const annualTax = annualIncome * rTotal;
          const perPayTax = annualTax / periodsPerYear;

          // Allocation: work municipality gets up to its rate, remainder to resident
          const workTaxMax = annualIncome * rWork;
          const workTax = Math.min(workTaxMax, annualTax);
          const residentTotalTax = annualTax - workTax;

          // Split resident tax between municipality and school district proportionally
          let residentMuniTax = 0;
          let residentSchoolTax = 0;
          if (resTotalPct > 0 && residentTotalTax > 0) {
            const muniShare = resMuniRatePct / resTotalPct;
            residentMuniTax = residentTotalTax * muniShare;
            residentSchoolTax = residentTotalTax - residentMuniTax;
          }

          // Update UI
          document.getElementById("resultsSection").classList.remove("hidden");
          document.getElementById("effectiveRateDisplay").textContent = (
            rTotal * 100
          ).toFixed(2);
          document.getElementById("annualTaxDisplay").textContent =
            formatCurrency(annualTax);
          document.getElementById("perPayTaxDisplay").textContent =
            formatCurrency(perPayTax);
          document.getElementById("perPayLabel").textContent = perPayLabel;

          document.getElementById("residentMunicipalTaxDisplay").textContent =
            formatCurrency(residentMuniTax);
          document.getElementById("residentSchoolTaxDisplay").textContent =
            formatCurrency(residentSchoolTax);
          document.getElementById("workMunicipalTaxDisplay").textContent =
            formatCurrency(workTax);

          const resMunicipality =
            document.getElementById("residentMunicipality").value.trim() ||
            "your resident municipality";
          const resSchool =
            document.getElementById("residentSchoolDistrict").value.trim() ||
            "your resident school district";
          const workMunicipality =
            document.getElementById("workMunicipality").value.trim() ||
            "your work municipality";

          const rateExplanation = [];
          rateExplanation.push(
            `Resident total rate: ${resTotalPct.toFixed(
              2
            )}% (municipality ${resMuniRatePct.toFixed(
              2
            )}% + school ${resSchoolRatePct.toFixed(2)}%).`
          );
          rateExplanation.push(
            `Work non-resident rate: ${workNonResRatePct.toFixed(2)}%.`
          );
          rateExplanation.push(
            `Effective rate used: ${(rTotal * 100).toFixed(
              2
            )}% (higher of resident vs. work non-resident).`
          );
          document.getElementById("rateExplanation").textContent =
            rateExplanation.join(" ");

          const summaryParts = [];
          summaryParts.push(
            `Based on an annual earned income of $${formatCurrency(
              annualIncome
            )}, your estimated local earned income tax is $${formatCurrency(
              annualTax
            )} per year at an effective rate of ${(rTotal * 100).toFixed(2)}%.`
          );
          if (workNonResRatePct > 0) {
            summaryParts.push(
              `${workMunicipality} receives approximately $${formatCurrency(
                workTax
              )} as non-resident EIT, and ${resMunicipality} / ${resSchool} receive about $${formatCurrency(
                residentTotalTax
              )} combined.`
            );
          } else {
            summaryParts.push(
              `All of this tax is allocated to your resident jurisdiction (${resMunicipality} and ${resSchool}).`
            );
          }
          document.getElementById("summaryText").textContent =
            summaryParts.join(" ");

          const philaChecked = document.getElementById("philaOverride").checked;
          if (philaChecked) {
            document.getElementById("summaryText").textContent +=
              " Note: You indicated that Philadelphia Wage Tax rules may apply. This calculator does not compute the Wage Tax itself; confirm your exact liability with official Philadelphia tax resources.";
          }
        });
    </script>

