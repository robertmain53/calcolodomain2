          labels.flushesValue.textContent = inputs.flushes.value;
          labels.laundryValue.textContent = inputs.laundry.value;
          labels.dishwasherValue.textContent = inputs.dishwasher.value;
          labels.outdoorValue.textContent = inputs.outdoor.value;
        }

        ["showers", "flushes", "laundry", "dishwasher", "outdoor"].forEach(
          (id) => {
            inputs[id].addEventListener("input", updateRangeLabels);
          }
        );

        inputs.dietPattern.addEventListener("change", () => {
          const custom = inputs.dietPattern.value === "custom";
          dietCustomSection.classList.toggle("hidden", !custom);
        });

        function parsePositiveFloat(input, fallback) {
          const v = parseFloat(input.value);
          if (isNaN(v) || v < 0) return fallback;
          return v;
        }

        function computeHomeLitersPerDay() {
          const people = Math.max(1, parseInt(inputs.people.value, 10) || 1);

          const showersWeek = parsePositiveFloat(inputs.showers, 7);
          const flushesDay = parsePositiveFloat(inputs.flushes, 5);
          const laundryWeek = parsePositiveFloat(inputs.laundry, 2);
          const dishwasherWeek = parsePositiveFloat(inputs.dishwasher, 3);
          const outdoorMinutesWeek = parsePositiveFloat(inputs.outdoor, 0);

          const showerL = (showersWeek * 8 * 9) / 7; // 8 min, 9 L/min
          const flushL = flushesDay * 6;
          const laundryL = (laundryWeek * 70) / 7 / people;
          const dishwasherL = (dishwasherWeek * 15) / 7 / people;
          const outdoorL = (outdoorMinutesWeek * 15) / 7 / people;

          return showerL + flushL + laundryL + dishwasherL + outdoorL;
        }

        function computeDietLitersPerDay() {
          const pattern = inputs.dietPattern.value;
          if (pattern !== "custom") {
            const region = inputs.region.value;
            let factor = 1;
            if (region === "high") factor = 1.15;
            if (region === "low") factor = 0.85;

            let base;
            switch (pattern) {
              case "meatHeavy":
                base = 4000;
                break;
              case "mixed":
                base = 3000;
                break;
              case "vegetarian":
                base = 2200;
                break;
              case "vegan":
                base = 1800;
                break;
              default:
                base = 3000;
            }
            return base * factor;
          }

          // custom servings per week
          const beef = parsePositiveFloat(inputs.beef, 0);
          const poultry = parsePositiveFloat(inputs.poultry, 0);
          const dairy = parsePositiveFloat(inputs.dairy, 0);
          const grains = parsePositiveFloat(inputs.grains, 0);

          const beefL = beef * 2300;
          const poultryL = poultry * 500;
          const dairyL = dairy * 220;
          const grainsL = grains * 60;

          const totalWeek = beefL + poultryL + dairyL + grainsL;
          return totalWeek / 7;
        }

        function computeLifestyleLitersPerDay() {
          const clothes = parsePositiveFloat(inputs.clothes, 20);
          const electronics = parsePositiveFloat(inputs.electronics, 1);
          const flights = parsePositiveFloat(inputs.flights, 1);

          const clothesL = clothes * 2500;
          const electronicsL = electronics * 30000;
          const flightsL = flights * 20000;

          const totalYear = clothesL + electronicsL + flightsL;
          return totalYear / 365;
        }

        function classifyFootprint(totalLPerDay) {
          if (!isFinite(totalLPerDay) || totalLPerDay <= 0) {
            return {
              label: "No estimate yet",
              color: "bg-gray-100 text-gray-700",
            };
          }
          if (totalLPerDay < 2500) {
            return {
              label: "Relatively low footprint",
              color: "bg-emerald-100 text-emerald-800",
            };
          }
          if (totalLPerDay <= 4500) {
            return {
              label: "Around global average",
              color: "bg-amber-100 text-amber-800",
            };
          }
          return { label: "High footprint", color: "bg-red-100 text-red-800" };
        }

        function formatNumber(n, decimals) {
          return n.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
            minimumFractionDigits: decimals,
          });
        }

        function calculate() {
          results.calcError.classList.add("hidden");

          try {
            const people = Math.max(1, parseInt(inputs.people.value, 10) || 1);
            const home = computeHomeLitersPerDay();
            const diet = computeDietLitersPerDay();
            const life = computeLifestyleLitersPerDay();

            if (!isFinite(home) || !isFinite(diet) || !isFinite(life)) {
              throw new Error("Invalid inputs");
            }

            const totalPerPerson = home + diet + life;
            const totalPerPersonM3Year = (totalPerPerson * 365) / 1000;

            results.homeLitersDay.textContent = formatNumber(home, 0);
            results.dietLitersDay.textContent = formatNumber(diet, 0);
            results.lifeLitersDay.textContent = formatNumber(life, 0);
            results.totalLitersDay.textContent = formatNumber(
              totalPerPerson,
              0
            );
            results.totalM3Year.textContent = formatNumber(
              totalPerPersonM3Year,
              1
            );

            const sum = home + diet + life || 1;
            const homeShare = (home / sum) * 100;
            const dietShare = (diet / sum) * 100;
            const lifeShare = (life / sum) * 100;

            results.homeShare.textContent = formatNumber(homeShare, 0);
            results.dietShare.textContent = formatNumber(dietShare, 0);
            results.lifeShare.textContent = formatNumber(lifeShare, 0);

            const classification = classifyFootprint(totalPerPerson);
            results.footprintLabel.textContent = classification.label;
            results.footprintLabel.className =
              "result-badge " + classification.color;
          } catch (e) {
            results.calcError.classList.remove("hidden");
          }
        }

        function reset() {
          inputs.people.value = 1;
          inputs.region.value = "global";
          inputs.showers.value = 7;
          inputs.flushes.value = 5;
          inputs.laundry.value = 2;
          inputs.dishwasher.value = 3;
          inputs.outdoor.value = 0;
          inputs.dietPattern.value = "mixed";
          dietCustomSection.classList.add("hidden");
          inputs.beef.value = 2;
          inputs.poultry.value = 3;
          inputs.dairy.value = 7;
          inputs.grains.value = 14;
          inputs.clothes.value = 20;
          inputs.electronics.value = 1;
          inputs.flights.value = 1;
          updateRangeLabels();
          results.totalLitersDay.textContent = "–";
          results.totalM3Year.textContent = "–";
          results.homeLitersDay.textContent = "–";
          results.dietLitersDay.textContent = "–";
          results.lifeLitersDay.textContent = "–";
          results.homeShare.textContent = "–";
          results.dietShare.textContent = "–";
          results.lifeShare.textContent = "–";
          results.footprintLabel.textContent = "No estimate yet";
          results.footprintLabel.className =
            "result-badge bg-gray-100 text-gray-700";
          results.calcError.classList.add("hidden");
        }

        calculateBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", reset);

        // Initialize
        updateRangeLabels();
        calculate();
      })();
    </script>
  
