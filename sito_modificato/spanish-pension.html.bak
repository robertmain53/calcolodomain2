    <script>
      // Slider label
      const expectedReturnInput = document.getElementById("expected-return");
      const expectedReturnValue = document.getElementById(
        "expected-return-value"
      );
      if (expectedReturnInput && expectedReturnValue) {
        expectedReturnInput.addEventListener("input", () => {
          expectedReturnValue.textContent = expectedReturnInput.value + "%";
        });
      }

      function formatCurrencyEUR(value) {
        if (!isFinite(value)) return "€0";
        return new Intl.NumberFormat("en-ES", {
          style: "currency",
          currency: "EUR",
          maximumFractionDigits: 0,
        }).format(value);
      }

      function clamp(val, min, max) {
        return Math.min(Math.max(val, min), max);
      }

      function estimateAccrualRate(totalYears) {
        // Approximate Spanish accrual: 15 years -> ~50%, 36+ years -> 100%
        if (totalYears <= 0) return 0;
        if (totalYears < 15) {
          // Linearly from 0 to 50% between 0 and 15 years
          return (totalYears / 15) * 0.5;
        }
        if (totalYears >= 36) return 1.0;
        // Between 15 and 36 years, linearly from 50% to 100%
        const extraYears = totalYears - 15;
        const span = 36 - 15;
        return 0.5 + (extraYears / span) * 0.5;
      }

      function estimateAgeFactor(retAge) {
        // 67 -> 1.0, 65 -> 0.9, 63 -> 0.8, 60 -> 0.7, 70 -> 1.1
        if (retAge >= 70) return 1.1;
        if (retAge >= 67) return 1.0 + (retAge - 67) * 0.03;
        if (retAge <= 60) return 0.7;
        // Linear between 60 and 67
        const diff = retAge - 60;
        return 0.7 + (diff / 7) * 0.3;
      }

      function currencyToEUR(amount, currency) {
        const rates = {
          EUR: 1,
          USD: 0.9, // rough planning rates
          GBP: 1.15,
        };
        const rate = rates[currency] || 1;
        return amount * rate;
      }

      function calculatePension() {
        const currentAge =
          parseFloat(document.getElementById("current-age").value) || 0;
        const retirementAge =
          parseFloat(document.getElementById("retirement-age").value) || 0;
        const yearsContributed =
          parseFloat(document.getElementById("years-contributed").value) || 0;
        const futureYears =
          parseFloat(document.getElementById("future-years").value) || 0;
        const residencyYears =
          parseFloat(document.getElementById("residency-years").value) || 0;
        const salaryCurrency = document.getElementById("salary-currency").value;
        const avgSalary =
          parseFloat(document.getElementById("avg-salary").value) || 0;

        const targetIncome =
          parseFloat(document.getElementById("target-income").value) || 0;
        const currentSavings =
          parseFloat(document.getElementById("current-savings").value) || 0;
        const monthlySavings =
          parseFloat(document.getElementById("monthly-savings").value) || 0;
        const expectedReturn =
          parseFloat(document.getElementById("expected-return").value) || 0;

        const warningEl = document.getElementById("calc-warning");
        if (
          retirementAge <= currentAge ||
          retirementAge < 60 ||
          retirementAge > 70
        ) {
          warningEl.classList.remove("hidden");
          return;
        } else {
          warningEl.classList.add("hidden");
        }

        const yearsUntilRetirement = retirementAge - currentAge;
        const totalYearsContrib = clamp(yearsContributed + futureYears, 0, 50);

        // Convert salary to EUR
        const avgSalaryEUR = currencyToEUR(avgSalary, salaryCurrency);

        // Estimate accrual and age factor
        const accrualRate = estimateAccrualRate(totalYearsContrib);
        const ageFactor = estimateAgeFactor(retirementAge);

        // Cap pension at a reasonable maximum (e.g. 2,800 EUR/month)
        let grossPension = avgSalaryEUR * accrualRate * ageFactor;
        grossPension = clamp(grossPension, 0, 2800);

        // Update state pension result
        document.getElementById("state-pension-eur").textContent =
          formatCurrencyEUR(grossPension);

        // Non-contributory eligibility (very rough)
        let nonContribText = "";
        let nonContribNote = "";
        if (totalYearsContrib >= 15) {
          nonContribText =
            "Unlikely – you already meet the minimum contribution period for a contributory pension.";
          nonContribNote =
            "Non‑contributory pensions are mainly for people with little or no contribution history and very low income.";
        } else if (residencyYears >= 10) {
          nonContribText =
            "Possible – you meet the basic residence condition (10+ years). Income and assets still need to be assessed.";
          nonContribNote =
            "Eligibility also depends on strict income and asset limits and other legal conditions set by Spanish authorities.";
        } else {
          nonContribText = "Unlikely – residence period below 10 years.";
          nonContribNote =
            "Non‑contributory pensions usually require at least 10 years of legal residence in Spain plus low income and assets.";
        }
        document.getElementById("noncontrib-eligibility").textContent =
          nonContribText;
        document.getElementById("noncontrib-note").textContent = nonContribNote;

        // Private savings projection
        const r = expectedReturn / 100;
        const n = yearsUntilRetirement;
        let futureSavings = currentSavings;
        if (n > 0 && r > 0) {
          const factor = Math.pow(1 + r, n);
          futureSavings =
            currentSavings * factor + monthlySavings * 12 * ((factor - 1) / r);
        } else if (n > 0 && r === 0) {
          futureSavings = currentSavings + monthlySavings * 12 * n;
        }

        // Convert pot to monthly income over 25 years (300 months)
        const retirementYears = 25;
        const monthsInRetirement = retirementYears * 12;
        const privateMonthlyIncome =
          monthsInRetirement > 0 ? futureSavings / monthsInRetirement : 0;

        // Gap vs target
        const totalMonthlyIncome = grossPension + privateMonthlyIncome;
        const gap = Math.max(targetIncome - totalMonthlyIncome, 0);

        document.getElementById("gap-eur").textContent = formatCurrencyEUR(gap);

        // Summary
        const summaryList = document.getElementById("summary-list");
        summaryList.innerHTML = "";

        function addSummaryItem(text) {
          const li = document.createElement("li");
          li.textContent = text;
          summaryList.appendChild(li);
        }

        addSummaryItem(
          `You will have approximately ${yearsUntilRetirement.toFixed(
            0
          )} years until your planned retirement at age ${retirementAge}.`
        );
        addSummaryItem(
          `Total contribution career assumed: ${totalYearsContrib.toFixed(
            1
          )} years, with an average gross salary of about ${formatCurrencyEUR(
            avgSalaryEUR
          )}.`
        );
        addSummaryItem(
          `Estimated Spanish state pension at retirement: ${formatCurrencyEUR(
            grossPension
          )} per month (before tax).`
        );

        if (privateMonthlyIncome > 0) {
          addSummaryItem(
            `Your projected private savings could provide roughly ${formatCurrencyEUR(
              privateMonthlyIncome
            )} per month over about ${retirementYears} years.`
          );
        } else {
          addSummaryItem(
            "No private savings or monthly contributions were entered, so the pension gap is based on the state pension alone."
          );
        }

        if (targetIncome > 0) {
          if (gap > 0) {
            addSummaryItem(
              `To reach your target of ${formatCurrencyEUR(
                targetIncome
              )} per month, you would still need about ${formatCurrencyEUR(
                gap
              )} per month from additional sources.`
            );
          } else {
            addSummaryItem(
              "Based on these assumptions, your combined state pension and private savings could meet or exceed your target income."
            );
          }
        }

        addSummaryItem(
          "These figures are indicative only. For an official calculation, contact Seguridad Social or a qualified adviser."
        );
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculatePension);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("current-age").value = 45;
        document.getElementById("retirement-age").value = 67;
        document.getElementById("years-contributed").value = 25;
        document.getElementById("avg-salary").value = 2500;
        document.getElementById("salary-currency").value = "EUR";
        document.getElementById("future-years").value = 15;
        document.getElementById("residency-years").value = 10;
        document.querySelector(
          'input[name="profile-type"][value="resident"]'
        ).checked = true;
        document.getElementById("target-income").value = 1800;
        document.getElementById("current-savings").value = 20000;
        document.getElementById("monthly-savings").value = 250;
        document.getElementById("expected-return").value = 3;
        document.getElementById("expected-return-value").textContent = "3%";
        document.getElementById("state-pension-eur").textContent = "€0";
        document.getElementById("gap-eur").textContent = "€0";
        document.getElementById("noncontrib-eligibility").textContent =
          "Not evaluated yet";
        document.getElementById("noncontrib-note").textContent =
          "Requires low income, limited assets, and minimum residence in Spain.";
        const summaryList = document.getElementById("summary-list");
        summaryList.innerHTML = "";
        const li = document.createElement("li");
        li.textContent =
          "Fill in your details and click “Calculate Spanish pension” to see a personalised estimate.";
        summaryList.appendChild(li);
        document.getElementById("calc-warning").classList.add("hidden");
      });

      // Auto-calc on first load with defaults
      window.addEventListener("load", () => {
        calculatePension();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
