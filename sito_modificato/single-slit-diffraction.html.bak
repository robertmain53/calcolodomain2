    <script>
      // Utility: unit conversions to meters
      function toMeters(value, unit) {
        const v = parseFloat(value);
        if (!isFinite(v)) return NaN;
        switch (unit) {
          case "nm":
            return v * 1e-9;
          case "um":
            return v * 1e-6;
          case "mm":
            return v * 1e-3;
          case "cm":
            return v * 1e-2;
          case "m":
            return v;
          default:
            return NaN;
        }
      }

      function formatNumber(x, digits = 3) {
        if (!isFinite(x)) return "–";
        const ax = Math.abs(x);
        if (ax !== 0 && (ax < 1e-3 || ax >= 1e4)) {
          return x.toExponential(digits - 1);
        }
        return x.toFixed(digits);
      }

      function formatWithUnit(value, unit) {
        if (!isFinite(value)) return "–";
        return value + " " + unit;
      }

      function computePattern() {
        const lambda = toMeters(
          document.getElementById("wavelength").value,
          document.getElementById("wavelengthUnit").value
        );
        const a = toMeters(
          document.getElementById("slitWidth").value,
          document.getElementById("slitWidthUnit").value
        );
        const L = toMeters(
          document.getElementById("screenDistance").value,
          document.getElementById("screenDistanceUnit").value
        );
        const m = parseInt(document.getElementById("order").value, 10);
        const useSmallAngle = document.getElementById("useSmallAngle").checked;

        const thetaMinEl = document.getElementById("thetaMin");
        const yMinEl = document.getElementById("yMin");
        const thetaMaxEl = document.getElementById("thetaMax");
        const yMaxEl = document.getElementById("yMax");
        const centralWidthEl = document.getElementById("centralWidth");
        const fringeSpacingEl = document.getElementById("fringeSpacing");
        const intensityAtMaxEl = document.getElementById("intensityAtMax");

        if (
          !isFinite(lambda) ||
          !isFinite(a) ||
          !isFinite(L) ||
          lambda <= 0 ||
          a <= 0 ||
          L <= 0 ||
          !Number.isInteger(m) ||
          m < 0
        ) {
          thetaMinEl.textContent =
            yMinEl.textContent =
            thetaMaxEl.textContent =
            yMaxEl.textContent =
              "–";
          centralWidthEl.textContent =
            fringeSpacingEl.textContent =
            intensityAtMaxEl.textContent =
              "–";
          drawIntensity(lambda, a, L, useSmallAngle);
          return;
        }

        // Minima: a sinθ = m λ
        let thetaMin = null;
        if (m > 0) {
          const arg = (m * lambda) / a;
          if (Math.abs(arg) <= 1) {
            thetaMin = Math.asin(arg);
          }
        }

        // Maxima (approximate): between minima, at (m+0.5)λ/a
        let thetaMax = null;
        if (m >= 0) {
          const argMax = ((m + 0.5) * lambda) / a;
          if (Math.abs(argMax) <= 1) {
            thetaMax = Math.asin(argMax);
          }
        }

        function yFromTheta(theta) {
          if (theta === null) return null;
          if (useSmallAngle) {
            return L * theta;
          }
          return L * Math.tan(theta);
        }

        const yMin = thetaMin !== null ? yFromTheta(thetaMin) : null;
        const yMax = thetaMax !== null ? yFromTheta(thetaMax) : null;

        // Central maximum width (between first minima m=±1)
        let centralWidth = null;
        const arg1 = lambda / a;
        if (arg1 <= 1) {
          const theta1 = Math.asin(arg1);
          const y1 = yFromTheta(theta1);
          if (isFinite(y1)) centralWidth = 2 * y1;
        }

        // Fringe spacing Δy ≈ λL/a (small-angle)
        const fringeSpacing = (lambda * L) / a;

        // Intensity at approximate maxima position
        let intensityAtMax = null;
        if (thetaMax !== null) {
          const beta = (Math.PI * a * Math.sin(thetaMax)) / lambda;
          intensityAtMax = beta === 0 ? 1 : Math.pow(Math.sin(beta) / beta, 2);
        }

        // Format outputs
        const deg = (theta) =>
          theta === null ? "–" : formatNumber((theta * 180) / Math.PI, 3) + "°";
        const mm = (y) => (y === null ? "–" : formatNumber(y * 1e3, 3) + " mm");

        thetaMinEl.textContent =
          m === 0 ? "– (central maximum)" : deg(thetaMin);
        yMinEl.textContent = m === 0 ? "– (central maximum)" : mm(yMin);
        thetaMaxEl.textContent = deg(thetaMax);
        yMaxEl.textContent = mm(yMax);
        centralWidthEl.textContent =
          centralWidth === null ? "–" : mm(centralWidth);
        fringeSpacingEl.textContent = mm(fringeSpacing);
        intensityAtMaxEl.textContent =
          intensityAtMax === null ? "–" : formatNumber(intensityAtMax, 3);

        drawIntensity(lambda, a, L, useSmallAngle);
      }

      function drawIntensity(lambda, a, L, useSmallAngle) {
        const canvas = document.getElementById("intensityCanvas");
        if (!canvas || !canvas.getContext) return;
        const ctx = canvas.getContext("2d");
        const w = (canvas.width = canvas.clientWidth);
        const h = (canvas.height = canvas.clientHeight);

        ctx.fillStyle = "#020617";
        ctx.fillRect(0, 0, w, h);

        if (!isFinite(lambda) || !isFinite(a) || lambda <= 0 || a <= 0) {
          ctx.fillStyle = "#64748b";
          ctx.font = "12px Inter, system-ui, sans-serif";
          ctx.fillText(
            "Enter valid λ and slit width to see the diffraction pattern.",
            10,
            h / 2
          );
          return;
        }

        // Plot around central region: theta from -thetaMaxRange to +thetaMaxRange
        const maxOrder = 3;
        const arg = (maxOrder * lambda) / a;
        const thetaRange =
          Math.min(Math.asin(Math.min(arg, 0.99)), Math.PI / 3) || 0.3; // fallback

        function intensity(theta) {
          const beta = (Math.PI * a * Math.sin(theta)) / lambda;
          if (beta === 0) return 1;
          const s = Math.sin(beta) / beta;
          return s * s;
        }

        // Draw central axis
        ctx.strokeStyle = "#1e293b";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(0, h / 2);
        ctx.lineTo(w, h / 2);
        ctx.stroke();

        // Plot intensity curve
        ctx.strokeStyle = "#38bdf8";
        ctx.lineWidth = 2;
        ctx.beginPath();
        for (let i = 0; i < w; i++) {
          const xNorm = (i / (w - 1)) * 2 - 1; // -1 to 1
          const theta = xNorm * thetaRange;
          const I = intensity(theta);
          const y = h - I * (h - 10) - 5;
          if (i === 0) ctx.moveTo(i, y);
          else ctx.lineTo(i, y);
        }
        ctx.stroke();

        // Mark center
        ctx.strokeStyle = "#f97316";
        ctx.setLineDash([4, 4]);
        ctx.beginPath();
        ctx.moveTo(w / 2, 5);
        ctx.lineTo(w / 2, h - 5);
        ctx.stroke();
        ctx.setLineDash([]);
      }

      document
        .getElementById("computeButton")
        .addEventListener("click", computePattern);
      [
        "wavelength",
        "slitWidth",
        "screenDistance",
        "order",
        "wavelengthUnit",
        "slitWidthUnit",
        "screenDistanceUnit",
        "useSmallAngle",
      ].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("change", computePattern);
      });

      window.addEventListener("load", computePattern);
    </script>

