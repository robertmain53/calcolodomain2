    <script>
      // Utility functions
      function round(value, decimals) {
        if (!isFinite(value)) return NaN;
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function formatNumber(value, decimals) {
        if (!isFinite(value)) return "–";
        return round(value, decimals).toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      // State
      const state = {
        unitSystem: "us", // 'us' or 'metric'
      };

      function updateUnitLabels() {
        const isUS = state.unitSystem === "us";

        document.getElementById("single-distance-unit").textContent = isUS
          ? "miles"
          : "km";
        document.getElementById("single-fuel-unit").textContent = isUS
          ? "gallons"
          : "liters";
        document.getElementById("single-currency-symbol").textContent = isUS
          ? "$"
          : "€";
        document.getElementById("single-price-help").textContent = isUS
          ? "Price per gallon."
          : "Price per liter.";

        document.getElementById("multi-distance-unit-label").textContent = isUS
          ? "miles"
          : "km";
        document.getElementById("multi-fuel-unit-label").textContent = isUS
          ? "gallons"
          : "liters";

        document.getElementById("trip-distance-unit").textContent = isUS
          ? "miles"
          : "km";
        document.getElementById("trip-currency-symbol").textContent = isUS
          ? "$"
          : "€";
        document.getElementById("trip-price-help").textContent = isUS
          ? "Price per gallon."
          : "Price per liter.";
        document.getElementById("trip-mpg-a-unit").textContent = isUS
          ? "MPG"
          : "L/100km";
        document.getElementById("trip-mpg-b-unit").textContent = isUS
          ? "MPG"
          : "L/100km";
      }

      // Tab handling
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".tab-btn")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document.querySelectorAll(".tab-panel").forEach((panel) => {
            panel.classList.toggle("hidden", panel.id !== "tab-" + target);
          });
        });
      });

      // Unit system change
      document.getElementById("unit-system").addEventListener("change", (e) => {
        state.unitSystem = e.target.value;
        updateUnitLabels();
      });

      updateUnitLabels();

      // Single fill-up calculation
      document
        .getElementById("single-calc-btn")
        .addEventListener("click", () => {
          const distance = parseFloat(
            document.getElementById("single-distance").value
          );
          const fuel = parseFloat(document.getElementById("single-fuel").value);
          const price = parseFloat(
            document.getElementById("single-price").value
          );

          if (!(distance > 0) || !(fuel > 0)) {
            alert("Please enter positive values for distance and fuel used.");
            return;
          }

          const isUS = state.unitSystem === "us";
          let mpg, lPer100, kmPerL;

          if (isUS) {
            mpg = distance / fuel;
            lPer100 = 235.215 / mpg;
            kmPerL = (distance * 1.609344) / (fuel * 3.785411784);
          } else {
            kmPerL = distance / fuel;
            lPer100 = (100 * fuel) / distance;
            mpg = 235.215 / lPer100;
          }

          const mpgText = `${formatNumber(mpg, 2)} MPG`;
          const l100Text = `${formatNumber(lPer100, 2)} L/100km`;
          const kmLText = `${formatNumber(kmPerL, 2)} km/L`;

          document.getElementById("single-mpg-main").textContent = isUS
            ? mpgText
            : l100Text;
          document.getElementById("single-metric-main").textContent = isUS
            ? `${l100Text} • ${kmLText}`
            : `${mpgText} • ${kmLText}`;

          let costSummary = "No fuel price provided.";
          if (price > 0) {
            if (isUS) {
              const totalCost = fuel * price;
              const costPerMile = price / mpg;
              const costPer100Miles = costPerMile * 100;
              costSummary = `Total cost: ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(totalCost, 2)} (${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPerMile, 3)} per mile, ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPer100Miles, 2)} per 100 miles).`;
            } else {
              const totalCost = fuel * price;
              const costPerKm = (price * lPer100) / 100;
              const costPer100Km = costPerKm * 100;
              costSummary = `Total cost: ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(totalCost, 2)} (${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPerKm, 3)} per km, ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPer100Km, 2)} per 100 km).`;
            }
          }
          document.getElementById("single-cost-summary").textContent =
            costSummary;
          document.getElementById("single-results").classList.remove("hidden");
        });

      document
        .getElementById("single-reset-btn")
        .addEventListener("click", () => {
          document.getElementById("single-distance").value = "";
          document.getElementById("single-fuel").value = "";
          document.getElementById("single-price").value = "";
          document.getElementById("single-results").classList.add("hidden");
        });

      // Multiple fill-ups
      const multiRowsBody = document.getElementById("multi-rows");

      function addMultiRow() {
        const rowCount = multiRowsBody.children.length + 1;
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";
        tr.innerHTML = `
      <td class="px-3 py-2 text-gray-700">#${rowCount}</td>
      <td class="px-3 py-2">
        <input type="number" class="multi-distance w-full border border-gray-300 rounded-md px-2 py-1 text-sm" min="0" step="0.1" placeholder="Distance">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="multi-fuel w-full border border-gray-300 rounded-md px-2 py-1 text-sm" min="0" step="0.01" placeholder="Fuel">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="multi-price w-full border border-gray-300 rounded-md px-2 py-1 text-sm" min="0" step="0.01" placeholder="Price per unit">
      </td>
      <td class="px-3 py-2 text-center">
        <button type="button" class="multi-remove text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;
        multiRowsBody.appendChild(tr);
      }

      document
        .getElementById("multi-add-row")
        .addEventListener("click", addMultiRow);

      multiRowsBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("multi-remove")) {
          const row = e.target.closest("tr");
          row.remove();
          Array.from(multiRowsBody.children).forEach((tr, idx) => {
            tr.querySelector("td").textContent = "#" + (idx + 1);
          });
        }
      });

      addMultiRow();
      addMultiRow();

      document
        .getElementById("multi-calc-btn")
        .addEventListener("click", () => {
          const rows = Array.from(multiRowsBody.querySelectorAll("tr"));
          if (!rows.length) {
            alert("Please add at least one fill‑up.");
            return;
          }

          let totalDistance = 0;
          let totalFuel = 0;
          let totalCost = 0;
          let anyPrice = false;

          for (const row of rows) {
            const d = parseFloat(row.querySelector(".multi-distance").value);
            const f = parseFloat(row.querySelector(".multi-fuel").value);
            const p = parseFloat(row.querySelector(".multi-price").value);

            if (d > 0 && f > 0) {
              totalDistance += d;
              totalFuel += f;
              if (p > 0) {
                totalCost += f * p;
                anyPrice = true;
              }
            }
          }

          if (!(totalDistance > 0) || !(totalFuel > 0)) {
            alert(
              "Please enter positive distance and fuel values for at least one fill‑up."
            );
            return;
          }

          const isUS = state.unitSystem === "us";
          let mpg, lPer100, kmPerL;

          if (isUS) {
            mpg = totalDistance / totalFuel;
            lPer100 = 235.215 / mpg;
            kmPerL = (totalDistance * 1.609344) / (totalFuel * 3.785411784);
          } else {
            kmPerL = totalDistance / totalFuel;
            lPer100 = (100 * totalFuel) / totalDistance;
            mpg = 235.215 / lPer100;
          }

          const mpgText = `${formatNumber(mpg, 2)} MPG`;
          const l100Text = `${formatNumber(lPer100, 2)} L/100km`;
          const kmLText = `${formatNumber(kmPerL, 2)} km/L`;

          document.getElementById("multi-mpg-main").textContent = isUS
            ? mpgText
            : l100Text;
          document.getElementById("multi-metric-main").textContent = isUS
            ? `${l100Text} • ${kmLText}`
            : `${mpgText} • ${kmLText}`;

          let costSummary = "No fuel prices provided.";
          if (anyPrice && totalCost > 0) {
            if (isUS) {
              const costPerMile = totalCost / totalDistance;
              costSummary = `Total fuel cost: ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(totalCost, 2)} (${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPerMile, 3)} per mile).`;
            } else {
              const costPerKm = totalCost / totalDistance;
              costSummary = `Total fuel cost: ${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(totalCost, 2)} (${
                document.getElementById("single-currency-symbol").textContent
              }${formatNumber(costPerKm, 3)} per km).`;
            }
          }
          document.getElementById("multi-cost-summary").textContent =
            costSummary;
          document.getElementById("multi-results").classList.remove("hidden");
        });

      document
        .getElementById("multi-reset-btn")
        .addEventListener("click", () => {
          multiRowsBody.innerHTML = "";
          addMultiRow();
          addMultiRow();
          document.getElementById("multi-results").classList.add("hidden");
        });

      // Trip cost & comparison
      document.getElementById("trip-calc-btn").addEventListener("click", () => {
        const distance = parseFloat(
          document.getElementById("trip-distance").value
        );
        const price = parseFloat(document.getElementById("trip-price").value);
        const a = parseFloat(document.getElementById("trip-mpg-a").value);
        const b = parseFloat(document.getElementById("trip-mpg-b").value);
        const isUS = state.unitSystem === "us";

        if (!(distance > 0) || !(price > 0) || !(a > 0)) {
          alert(
            "Please enter positive values for trip distance, fuel price, and Vehicle A fuel economy."
          );
          return;
        }

        let fuelA, costA, fuelB, costB;

        if (isUS) {
          fuelA = distance / a;
          costA = fuelA * price;
          if (b > 0) {
            fuelB = distance / b;
            costB = fuelB * price;
          }
        } else {
          fuelA = (a * distance) / 100;
          costA = fuelA * price;
          if (b > 0) {
            fuelB = (b * distance) / 100;
            costB = fuelB * price;
          }
        }

        const unitFuel = isUS ? "gallons" : "liters";
        const distUnit = isUS ? "miles" : "km";
        const currency = document.getElementById(
          "trip-currency-symbol"
        ).textContent;

        document.getElementById(
          "trip-a-summary"
        ).textContent = `Fuel needed: ${formatNumber(
          fuelA,
          2
        )} ${unitFuel} • Trip cost: ${currency}${formatNumber(
          costA,
          2
        )} (${currency}${formatNumber(costA / distance, 3)} per ${distUnit}).`;

        const tripBCard = document.getElementById("trip-b-card");
        const tripBSummary = document.getElementById("trip-b-summary");
        const tripCompare = document.getElementById("trip-compare-summary");

        if (b > 0 && fuelB > 0 && costB > 0) {
          tripBCard.classList.remove("hidden");
          tripBSummary.textContent = `Fuel needed: ${formatNumber(
            fuelB,
            2
          )} ${unitFuel} • Trip cost: ${currency}${formatNumber(
            costB,
            2
          )} (${currency}${formatNumber(
            costB / distance,
            3
          )} per ${distUnit}).`;

          const diff = costB - costA;
          if (Math.abs(diff) < 0.01) {
            tripCompare.textContent =
              "Both vehicles have almost the same fuel cost for this trip.";
          } else if (diff > 0) {
            tripCompare.textContent = `Vehicle A saves about ${currency}${formatNumber(
              diff,
              2
            )} in fuel for this trip compared with Vehicle B.`;
          } else {
            tripCompare.textContent = `Vehicle B saves about ${currency}${formatNumber(
              -diff,
              2
            )} in fuel for this trip compared with Vehicle A.`;
          }
        } else {
          tripBCard.classList.add("hidden");
        }

        document.getElementById("trip-results").classList.remove("hidden");
      });

      document
        .getElementById("trip-reset-btn")
        .addEventListener("click", () => {
          document.getElementById("trip-distance").value = "";
          document.getElementById("trip-price").value = "";
          document.getElementById("trip-mpg-a").value = "";
          document.getElementById("trip-mpg-b").value = "";
          document.getElementById("trip-results").classList.add("hidden");
        });

      // FAQ details toggle (for accessibility enhancement)
      document.querySelectorAll("#faq details").forEach((d) => {
        d.addEventListener("toggle", () => {
          // Only one open at a time (optional behavior)
          if (d.open) {
            document.querySelectorAll("#faq details").forEach((other) => {
              if (other !== d) other.open = false;
            });
          }
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
