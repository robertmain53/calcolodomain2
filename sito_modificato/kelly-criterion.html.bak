    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      // Kelly calculator logic
      (function () {
        const modeSimpleBtn = document.getElementById("mode-simple-btn");
        const modeCustomBtn = document.getElementById("mode-custom-btn");
        const modeSimple = document.getElementById("mode-simple");
        const modeCustom = document.getElementById("mode-custom");

        const oddsFormatButtons = document.querySelectorAll(".odds-format-btn");
        const oddsAmericanGroup = document.getElementById(
          "odds-american-group"
        );
        const oddsDecimalGroup = document.getElementById("odds-decimal-group");
        const oddsFractionalGroup = document.getElementById(
          "odds-fractional-group"
        );

        const oddsAmericanInput = document.getElementById("odds-american");
        const oddsDecimalInput = document.getElementById("odds-decimal");
        const oddsFracNumInput = document.getElementById("odds-frac-num");
        const oddsFracDenInput = document.getElementById("odds-frac-den");

        const winProbSlider = document.getElementById("win-prob");
        const winProbInput = document.getElementById("win-prob-input");

        const customEdgeSlider = document.getElementById("custom-edge");
        const customEdgeInput = document.getElementById("custom-edge-input");
        const customPayoutInput = document.getElementById("custom-payout");

        const bankrollInput = document.getElementById("bankroll");
        const fracMultSlider = document.getElementById("fraction-multiplier");
        const fracMultOutput = document.getElementById(
          "fraction-multiplier-output"
        );

        const kellyFractionEl = document.getElementById("kelly-fraction");
        const kellyFractionScaledEl = document.getElementById(
          "kelly-fraction-scaled"
        );
        const kellyStakeEl = document.getElementById("kelly-stake");
        const kellyHalfEl = document.getElementById("kelly-half");
        const kellyQuarterEl = document.getElementById("kelly-quarter");
        const kellyWarningEl = document.getElementById("kelly-warning");

        let currentOddsFormat = "american";
        let currentMode = "simple";

        function setMode(mode) {
          currentMode = mode;
          if (mode === "simple") {
            modeSimple.classList.remove("hidden");
            modeCustom.classList.add("hidden");
            modeSimpleBtn.classList.add("border-blue-600", "text-blue-600");
            modeSimpleBtn.classList.remove(
              "border-transparent",
              "text-gray-500"
            );
            modeCustomBtn.classList.remove("border-blue-600", "text-blue-600");
            modeCustomBtn.classList.add("border-transparent", "text-gray-500");
          } else {
            modeSimple.classList.add("hidden");
            modeCustom.classList.remove("hidden");
            modeCustomBtn.classList.add("border-blue-600", "text-blue-600");
            modeCustomBtn.classList.remove(
              "border-transparent",
              "text-gray-500"
            );
            modeSimpleBtn.classList.remove("border-blue-600", "text-blue-600");
            modeSimpleBtn.classList.add("border-transparent", "text-gray-500");
          }
          recalc();
        }

        modeSimpleBtn.addEventListener("click", () => setMode("simple"));
        modeCustomBtn.addEventListener("click", () => setMode("custom"));

        function setOddsFormat(format) {
          currentOddsFormat = format;
          oddsFormatButtons.forEach((btn) => {
            if (btn.dataset.oddsFormat === format) {
              btn.classList.add(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700"
              );
              btn.classList.remove("border-gray-300", "text-gray-700");
            } else {
              btn.classList.remove(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700"
              );
              btn.classList.add("border-gray-300", "text-gray-700");
            }
          });

          oddsAmericanGroup.classList.toggle("hidden", format !== "american");
          oddsDecimalGroup.classList.toggle("hidden", format !== "decimal");
          oddsFractionalGroup.classList.toggle(
            "hidden",
            format !== "fractional"
          );

          recalc();
        }

        oddsFormatButtons.forEach((btn) => {
          btn.addEventListener("click", () =>
            setOddsFormat(btn.dataset.oddsFormat)
          );
        });

        function getNetOddsB() {
          if (currentMode === "custom") {
            const b = parseFloat(customPayoutInput.value);
            return isFinite(b) && b > 0 ? b : NaN;
          }

          if (currentOddsFormat === "american") {
            const A = parseFloat(oddsAmericanInput.value);
            if (!isFinite(A) || A === 0) return NaN;
            return A > 0 ? A / 100 : 100 / Math.abs(A);
          } else if (currentOddsFormat === "decimal") {
            const D = parseFloat(oddsDecimalInput.value);
            if (!isFinite(D) || D <= 1) return NaN;
            return D - 1;
          } else {
            const num = parseFloat(oddsFracNumInput.value);
            const den = parseFloat(oddsFracDenInput.value);
            if (!isFinite(num) || !isFinite(den) || den <= 0) return NaN;
            return num / den;
          }
        }

        function getProbabilities() {
          if (currentMode === "custom") {
            const edgePct = parseFloat(customEdgeInput.value);
            const b = getNetOddsB();
            if (!isFinite(edgePct) || !isFinite(b) || b <= 0)
              return { p: NaN, q: NaN };
            const e = edgePct / 100;
            // Edge e = b*p - q = b*p - (1-p) = (b+1)p - 1 => p = (1 + e) / (b + 1)
            const p = (1 + e) / (b + 1);
            const q = 1 - p;
            return { p, q };
          } else {
            const pPct = parseFloat(winProbInput.value);
            if (!isFinite(pPct)) return { p: NaN, q: NaN };
            const p = pPct / 100;
            const q = 1 - p;
            return { p, q };
          }
        }

        function formatPercent(fraction) {
          if (!isFinite(fraction)) return "—";
          const pct = fraction * 100;
          return pct.toFixed(2) + "%";
        }

        function formatMoney(amount) {
          if (!isFinite(amount)) return "—";
          const sign = amount < 0 ? "-" : "";
          const val = Math.abs(amount);
          return (
            sign +
            "$" +
            val.toLocaleString(undefined, {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2,
            })
          );
        }

        function recalc() {
          const b = getNetOddsB();
          const { p, q } = getProbabilities();
          const bankroll = parseFloat(bankrollInput.value);
          const mult = parseFloat(fracMultSlider.value) / 100;

          let fStar = NaN;
          if (isFinite(b) && b > 0 && isFinite(p) && p >= 0 && p <= 1) {
            const qVal = isFinite(q) ? q : 1 - p;
            fStar = (b * p - qVal) / b;
          }

          if (!isFinite(fStar)) {
            kellyFractionEl.textContent = "—";
            kellyFractionScaledEl.textContent = "—";
            kellyStakeEl.textContent = "—";
            kellyHalfEl.textContent = "—";
            kellyQuarterEl.textContent = "—";
            kellyWarningEl.classList.add("hidden");
            return;
          }

          const fStarClamped = Math.max(Math.min(fStar, 5), -1); // clamp for display
          const fScaled = fStarClamped * mult;

          kellyFractionEl.textContent =
            fStarClamped.toFixed(4) + " (" + formatPercent(fStarClamped) + ")";
          kellyFractionScaledEl.textContent =
            fScaled.toFixed(4) + " (" + formatPercent(fScaled) + ")";

          if (!isFinite(bankroll) || bankroll <= 0) {
            kellyStakeEl.textContent = "—";
            kellyHalfEl.textContent = "—";
            kellyQuarterEl.textContent = "—";
          } else {
            const stakeFull = Math.max(0, fScaled) * bankroll;
            const stakeHalf = Math.max(0, fStarClamped * 0.5) * bankroll;
            const stakeQuarter = Math.max(0, fStarClamped * 0.25) * bankroll;
            kellyStakeEl.textContent = formatMoney(stakeFull);
            kellyHalfEl.textContent = formatMoney(stakeHalf);
            kellyQuarterEl.textContent = formatMoney(stakeQuarter);
          }

          if (fStarClamped <= 0) {
            kellyWarningEl.classList.remove("hidden");
          } else {
            kellyWarningEl.classList.add("hidden");
          }
        }

        // Sync sliders and inputs
        winProbSlider.addEventListener("input", () => {
          winProbInput.value = winProbSlider.value;
          recalc();
        });
        winProbInput.addEventListener("input", () => {
          let v = parseFloat(winProbInput.value);
          if (!isFinite(v)) v = 50;
          v = Math.max(0.1, Math.min(99.9, v));
          winProbInput.value = v;
          winProbSlider.value = v;
          recalc();
        });

        customEdgeSlider.addEventListener("input", () => {
          customEdgeInput.value = customEdgeSlider.value;
          recalc();
        });
        customEdgeInput.addEventListener("input", () => {
          let v = parseFloat(customEdgeInput.value);
          if (!isFinite(v)) v = 0;
          v = Math.max(-100, Math.min(100, v));
          customEdgeInput.value = v;
          customEdgeSlider.value = v;
          recalc();
        });

        [
          oddsAmericanInput,
          oddsDecimalInput,
          oddsFracNumInput,
          oddsFracDenInput,
          customPayoutInput,
          bankrollInput,
        ].forEach((el) => {
          el.addEventListener("input", recalc);
        });

        fracMultSlider.addEventListener("input", () => {
          fracMultOutput.textContent = fracMultSlider.value + "%";
          recalc();
        });

        // Initial state
        setOddsFormat("american");
        recalc();
      })();
    </script>

