    <script>
      // Water intake calculator logic
      function clamp(value, min, max) {
        return Math.min(Math.max(value, min), max);
      }

      function formatLitersRange(minMl, maxMl) {
        const minL = minMl / 1000;
        const maxL = maxMl / 1000;
        return `${minL.toFixed(1)}–${maxL.toFixed(1)} L/day`;
      }

      function mlToFlOz(ml) {
        return ml / 29.5735;
      }

      function updateResults() {
        const sex = document.getElementById("sex").value;
        const age = parseFloat(document.getElementById("age").value) || 30;
        let weight = parseFloat(document.getElementById("weight").value) || 70;
        const weightUnit = document.getElementById("weight-unit").value;
        const activity = document.getElementById("activity").value;
        const climate = document.getElementById("climate").value;
        const pregnancy = document.getElementById("pregnancy").value;
        const includeFood = document.getElementById("include-food").checked;

        // Convert weight to kg if needed
        if (weightUnit === "lb") {
          weight = weight * 0.45359237;
        }

        // Reasonable bounds
        weight = clamp(weight, 30, 250);

        // Baseline 30–35 mL/kg
        let baseLow = weight * 30;
        let baseHigh = weight * 35;

        // Activity factor
        let activityFactor = 0;
        switch (activity) {
          case "light":
            activityFactor = 0.05;
            break;
          case "moderate":
            activityFactor = 0.1;
            break;
          case "high":
            activityFactor = 0.2;
            break;
          case "athlete":
            activityFactor = 0.3;
            break;
          default:
            activityFactor = 0; // sedentary
        }

        // Climate factor
        let climateFactor = 0;
        switch (climate) {
          case "temperate":
            climateFactor = 0.05;
            break;
          case "hot":
            climateFactor = 0.1;
            break;
          case "very-hot":
            climateFactor = 0.2;
            break;
          default:
            climateFactor = 0; // cool
        }

        const combinedFactor = 1 + activityFactor + climateFactor;
        baseLow *= combinedFactor;
        baseHigh *= combinedFactor;

        // Pregnancy / breastfeeding
        if (pregnancy === "pregnant") {
          baseLow += 300;
          baseHigh += 300;
        } else if (pregnancy === "breastfeeding") {
          baseLow += 700;
          baseHigh += 700;
        }

        // Adjust for food & other drinks
        if (includeFood) {
          baseLow *= 0.75;
          baseHigh *= 0.75;
        }

        // Safety caps (rough, conservative)
        let upperCapMl = 6000; // 6 L/day default
        if (age >= 65 || weight < 60) {
          upperCapMl = 4000; // 4 L/day for smaller/older adults
        }

        const lowerCapMl = 1200; // 1.2 L/day minimum suggestion
        let finalLow = clamp(baseLow, lowerCapMl, upperCapMl * 0.8);
        let finalHigh = clamp(baseHigh, finalLow + 200, upperCapMl);

        // Update main result
        document.getElementById("result-main").textContent = formatLitersRange(
          finalLow,
          finalHigh
        );

        const lowOz = mlToFlOz(finalLow);
        const highOz = mlToFlOz(finalHigh);
        document.getElementById("result-oz").textContent = `≈ ${lowOz.toFixed(
          0
        )}–${highOz.toFixed(0)} fl oz/day`;

        // Glasses (8 fl oz)
        const lowGlasses = lowOz / 8;
        const highGlasses = highOz / 8;
        document.getElementById(
          "result-glasses"
        ).textContent = `About ${lowGlasses.toFixed(0)}–${highGlasses.toFixed(
          0
        )} cups (8 fl oz) per day.`;

        // Hourly (assuming 16 waking hours)
        const wakingHours = 16;
        const lowPerHourMl = finalLow / wakingHours;
        const highPerHourMl = finalHigh / wakingHours;
        const lowPerHourOz = mlToFlOz(lowPerHourMl);
        const highPerHourOz = mlToFlOz(highPerHourMl);
        document.getElementById(
          "result-hourly"
        ).textContent = `Roughly ${lowPerHourMl.toFixed(
          0
        )}–${highPerHourMl.toFixed(0)} mL (${lowPerHourOz.toFixed(
          1
        )}–${highPerHourOz.toFixed(1)} fl oz) per waking hour.`;

        // Note
        document.getElementById("result-note").textContent =
          "Based on your weight, age, activity level, climate, and pregnancy/breastfeeding status.";

        // Range marker position (0–100%)
        const mid = (finalLow + finalHigh) / 2;
        const minDisplay = 1000;
        const maxDisplay = upperCapMl;
        const ratio = clamp(
          (mid - minDisplay) / (maxDisplay - minDisplay),
          0,
          1
        );
        const marker = document.getElementById("range-marker");
        marker.style.left = ratio * 100 + "%";
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", function (e) {
          e.preventDefault();
          updateResults();
        });

      // Recalculate on key changes for responsiveness
      [
        "sex",
        "age",
        "weight",
        "weight-unit",
        "activity",
        "climate",
        "pregnancy",
        "include-food",
      ].forEach((id) => {
        const el = document.getElementById(id);
        if (!el) return;
        el.addEventListener("change", updateResults);
        if (el.tagName === "INPUT") {
          el.addEventListener("input", updateResults);
        }
      });

      // Initial calculation
      updateResults();
    </script>

