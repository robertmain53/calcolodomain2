    <script>
      // Utility constants
      const PI = Math.PI;
      const FL_OZ_TO_IN3 = 1.8046875; // cubic inches per fluid ounce
      const ML_TO_MM3 = 1000; // 1 ml = 1000 mm^3

      const unitSystemEl = document.getElementById("unit-system");
      const beadShapeEl = document.getElementById("bead-shape");
      const tubeSizeEl = document.getElementById("tube-size");
      const wastePercentEl = document.getElementById("waste-percent");
      const addRowBtn = document.getElementById("add-row");
      const resetRowsBtn = document.getElementById("reset-rows");
      const calculateBtn = document.getElementById("calculate-btn");
      const jointRowsTbody = document.getElementById("joint-rows");

      const tubeSizeUnitLabel = document.getElementById("tube-size-unit-label");
      const lengthHeaderUnit = document.getElementById("length-header-unit");
      const widthHeaderUnit = document.getElementById("width-header-unit");
      const depthHeaderUnit = document.getElementById("depth-header-unit");

      const resultsBox = document.getElementById("results");
      const resultTotalLength = document.getElementById("result-total-length");
      const resultTotalVolume = document.getElementById("result-total-volume");
      const resultTubeVolume = document.getElementById("result-tube-volume");
      const resultTubesExact = document.getElementById("result-tubes-exact");
      const resultTubesRounded = document.getElementById(
        "result-tubes-rounded"
      );
      const resultNote = document.getElementById("result-note");

      function currentUnits() {
        return unitSystemEl.value === "metric"
          ? {
              system: "metric",
              lengthLabel: "m",
              smallLengthLabel: "mm",
              tubeLabel: "ml",
            }
          : {
              system: "imperial",
              lengthLabel: "ft",
              smallLengthLabel: "in",
              tubeLabel: "fl oz",
            };
      }

      function updateUnitLabels() {
        const u = currentUnits();
        tubeSizeUnitLabel.textContent = `(${u.tubeLabel})`;
        lengthHeaderUnit.textContent = `(${u.lengthLabel})`;
        widthHeaderUnit.textContent = `(${u.smallLengthLabel})`;
        depthHeaderUnit.textContent = `(${u.smallLengthLabel})`;
      }

      function addJointRow(defaults = {}) {
        const u = currentUnits();
        const row = document.createElement("tr");
        row.className = "border-t";

        const name =
          defaults.name || `Joint ${jointRowsTbody.children.length + 1}`;
        const lengthVal =
          defaults.length != null
            ? defaults.length
            : u.system === "imperial"
            ? 10
            : 3;
        const widthVal =
          defaults.width != null
            ? defaults.width
            : u.system === "imperial"
            ? 0.25
            : 6;
        const depthVal =
          defaults.depth != null
            ? defaults.depth
            : u.system === "imperial"
            ? 0.25
            : 6;

        row.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border-gray-300 rounded-md shadow-sm text-sm" value="${name}">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="joint-length w-full border-gray-300 rounded-md shadow-sm text-sm" min="0" step="0.01" value="${lengthVal}">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="joint-width w-full border-gray-300 rounded-md shadow-sm text-sm" min="0" step="0.01" value="${widthVal}">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="joint-depth w-full border-gray-300 rounded-md shadow-sm text-sm" min="0" step="0.01" value="${depthVal}">
      </td>
      <td class="px-3 py-2 text-xs text-gray-700 joint-volume-display">–</td>
      <td class="px-3 py-2 text-right">
        <button type="button" class="remove-row text-red-600 text-xs hover:underline">Remove</button>
      </td>
    `;

        jointRowsTbody.appendChild(row);

        row.querySelector(".remove-row").addEventListener("click", () => {
          row.remove();
          if (!jointRowsTbody.children.length) {
            addJointRow();
          }
        });
      }

      function resetJointRows() {
        jointRowsTbody.innerHTML = "";
        addJointRow({
          name: "Perimeter joint",
          length: currentUnits().system === "imperial" ? 40 : 12,
        });
        addJointRow({
          name: "Window/door joints",
          length: currentUnits().system === "imperial" ? 30 : 9,
        });
      }

      function parsePositiveNumber(value) {
        const n = parseFloat(value);
        return isFinite(n) && n > 0 ? n : 0;
      }

      function calculate() {
        const u = currentUnits();
        const beadShape = beadShapeEl.value;
        const tubeSize = parsePositiveNumber(tubeSizeEl.value);
        const wastePercent = Math.max(0, parseFloat(wastePercentEl.value) || 0);

        if (!tubeSize) {
          alert("Please enter a valid tube size.");
          return;
        }

        let totalLengthBase = 0; // ft or m
        let totalVolumeBase = 0; // in^3 or mm^3

        const rows = jointRowsTbody.querySelectorAll("tr");
        if (!rows.length) {
          alert("Please add at least one joint row.");
          return;
        }

        rows.forEach((row) => {
          const lengthInput = row.querySelector(".joint-length");
          const widthInput = row.querySelector(".joint-width");
          const depthInput = row.querySelector(".joint-depth");
          const volDisplay = row.querySelector(".joint-volume-display");

          const L = parsePositiveNumber(lengthInput.value);
          const w = parsePositiveNumber(widthInput.value);
          const d = parsePositiveNumber(depthInput.value);

          if (!L || !w) {
            volDisplay.textContent = "–";
            return;
          }

          let volume = 0;

          if (u.system === "imperial") {
            // Convert length from ft to in
            const L_in = L * 12;
            if (beadShape === "round") {
              const diameter = w; // in
              const radius = diameter / 2;
              const area = PI * radius * radius; // in^2
              volume = area * L_in; // in^3
            } else {
              // fillet: right triangle, legs ~ w
              const leg = w;
              const area = 0.5 * leg * leg; // in^2
              volume = area * L_in; // in^3
            }
          } else {
            // metric: length in m, width/depth in mm
            const L_mm = L * 1000;
            if (beadShape === "round") {
              const diameter = w; // mm
              const radius = diameter / 2;
              const area = PI * radius * radius; // mm^2
              volume = area * L_mm; // mm^3
            } else {
              const leg = w; // mm
              const area = 0.5 * leg * leg; // mm^2
              volume = area * L_mm; // mm^3
            }
          }

          totalLengthBase += L;
          totalVolumeBase += volume;

          // Display per-row volume
          if (u.system === "imperial") {
            const flOz = volume / FL_OZ_TO_IN3;
            volDisplay.textContent = `${volume.toFixed(1)} in³ (~${flOz.toFixed(
              2
            )} fl oz)`;
          } else {
            const ml = volume / ML_TO_MM3;
            volDisplay.textContent = `${volume.toFixed(0)} mm³ (~${ml.toFixed(
              1
            )} ml)`;
          }
        });

        if (!totalVolumeBase) {
          alert(
            "Please enter valid lengths and widths for at least one joint."
          );
          return;
        }

        // Tube volume in base units
        let tubeVolumeBase;
        if (u.system === "imperial") {
          tubeVolumeBase = tubeSize * FL_OZ_TO_IN3; // in^3
        } else {
          tubeVolumeBase = tubeSize * ML_TO_MM3; // mm^3
        }

        const totalVolumeWithWaste = totalVolumeBase * (1 + wastePercent / 100);
        const exactTubes = totalVolumeWithWaste / tubeVolumeBase;
        const roundedTubes = Math.ceil(exactTubes);

        // Populate results
        resultsBox.classList.remove("hidden");

        if (u.system === "imperial") {
          const totalLengthFt = totalLengthBase;
          const totalLengthM = totalLengthFt * 0.3048;
          const totalFlOz = totalVolumeBase / FL_OZ_TO_IN3;
          const totalMl = totalFlOz * 29.5735;

          resultTotalLength.textContent = `${totalLengthFt.toFixed(
            1
          )} ft (${totalLengthM.toFixed(1)} m)`;
          resultTotalVolume.textContent = `${totalFlOz.toFixed(
            2
          )} fl oz (${totalMl.toFixed(0)} ml)`;
          resultTubeVolume.textContent = `${tubeSize.toFixed(2)} fl oz (${(
            tubeVolumeBase / ML_TO_MM3
          ).toFixed(0)} ml)`;
        } else {
          const totalLengthM = totalLengthBase;
          const totalLengthFt = totalLengthM * 3.28084;
          const totalMl = totalVolumeBase / ML_TO_MM3;
          const totalFlOz = totalMl / 29.5735;

          resultTotalLength.textContent = `${totalLengthM.toFixed(
            1
          )} m (${totalLengthFt.toFixed(1)} ft)`;
          resultTotalVolume.textContent = `${totalMl.toFixed(
            1
          )} ml (${totalFlOz.toFixed(2)} fl oz)`;
          resultTubeVolume.textContent = `${tubeSize.toFixed(1)} ml (${(
            tubeVolumeBase /
            FL_OZ_TO_IN3 /
            29.5735
          ).toFixed(2)} fl oz)`;
        }

        resultTubesExact.textContent = exactTubes.toFixed(2);
        resultTubesRounded.textContent = roundedTubes.toString();

        resultNote.textContent = `Includes a waste/overfill factor of ${wastePercent.toFixed(
          1
        )}%. Always round up and consider buying one extra tube for safety.`;
      }

      // Event listeners
      unitSystemEl.addEventListener("change", () => {
        updateUnitLabels();
        resetJointRows();
        resultsBox.classList.add("hidden");
      });

      addRowBtn.addEventListener("click", () => addJointRow());
      resetRowsBtn.addEventListener("click", () => {
        resetJointRows();
        resultsBox.classList.add("hidden");
      });
      calculateBtn.addEventListener("click", calculate);

      // Initialize
      updateUnitLabels();
      resetJointRows();
    </script>

