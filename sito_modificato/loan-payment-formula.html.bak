    <script>
      // Tab switching
      const tabForward = document.getElementById("tab-forward");
      const tabReverse = document.getElementById("tab-reverse");
      const panelForward = document.getElementById("panel-forward");
      const panelReverse = document.getElementById("panel-reverse");
      const resultMainLabel = document.getElementById("result-main-label");
      const resultPaymentSub = document.getElementById("result-payment-sub");

      function setActiveTab(isForward) {
        if (isForward) {
          tabForward.classList.add(
            "border-blue-600",
            "text-blue-600",
            "font-semibold"
          );
          tabForward.classList.remove("text-gray-500");
          tabReverse.classList.remove(
            "border-blue-600",
            "text-blue-600",
            "font-semibold"
          );
          tabReverse.classList.add("text-gray-500");
          panelForward.classList.remove("hidden");
          panelReverse.classList.add("hidden");
          resultMainLabel.textContent = "Payment per period";
          resultPaymentSub.textContent = "Based on the loan payment formula";
        } else {
          tabReverse.classList.add(
            "border-blue-600",
            "text-blue-600",
            "font-semibold"
          );
          tabReverse.classList.remove("text-gray-500");
          tabForward.classList.remove(
            "border-blue-600",
            "text-blue-600",
            "font-semibold"
          );
          tabForward.classList.add("text-gray-500");
          panelReverse.classList.remove("hidden");
          panelForward.classList.add("hidden");
          resultMainLabel.textContent = "Maximum loan amount";
          resultPaymentSub.textContent =
            "Based on the inverse loan payment formula";
        }
      }

      tabForward.addEventListener("click", () => setActiveTab(true));
      tabReverse.addEventListener("click", () => setActiveTab(false));

      // Core calculation functions
      function calculatePayment(L, annualRate, years, paymentsPerYear) {
        const n = years * paymentsPerYear;
        if (n <= 0) return { error: "Loan term must be greater than 0." };
        const r = annualRate / 100 / paymentsPerYear;
        if (r === 0) {
          const P = L / n;
          return { P, n, r, ear: 0 };
        }
        const denom = 1 - Math.pow(1 + r, -n);
        if (denom === 0)
          return { error: "Invalid combination of rate and term." };
        const P = (r * L) / denom;
        const ear = Math.pow(1 + r, paymentsPerYear) - 1;
        return { P, n, r, ear };
      }

      function calculatePrincipalFromPayment(
        P,
        annualRate,
        years,
        paymentsPerYear
      ) {
        const n = years * paymentsPerYear;
        if (n <= 0) return { error: "Loan term must be greater than 0." };
        const r = annualRate / 100 / paymentsPerYear;
        if (r === 0) {
          const L = P * n;
          return { L, n, r, ear: 0 };
        }
        if (r === 0) return { error: "Rate cannot be zero for this formula." };
        const factor = (1 - Math.pow(1 + r, -n)) / r;
        const L = P * factor;
        const ear = Math.pow(1 + r, paymentsPerYear) - 1;
        return { L, n, r, ear };
      }

      function buildAmortization(L, P, r, n, extra) {
        const rows = [];
        let balance = L;
        let totalPaid = 0;
        let totalInterest = 0;
        const maxIterations = n + 1200; // safety cap

        for (let i = 1; i <= maxIterations; i++) {
          if (balance <= 0) break;
          const interest = r === 0 ? 0 : balance * r;
          let principal = P + extra - interest;
          if (principal <= 0 && r > 0) {
            // Payment too small to cover interest
            principal = 0;
          }
          if (principal > balance) {
            principal = balance;
          }
          const payment = principal + interest;
          balance = balance - principal;
          totalPaid += payment;
          totalInterest += interest;

          rows.push({
            period: i,
            payment,
            interest,
            principal,
            balance: balance < 1e-8 ? 0 : balance,
          });

          if (balance <= 0) break;
          if (i >= n && extra === 0) {
            // For standard amortization without extra, stop at n
            break;
          }
        }

        return { rows, totalPaid, totalInterest };
      }

      // DOM elements
      const loanAmountEl = document.getElementById("loan-amount");
      const annualRateEl = document.getElementById("annual-rate");
      const termYearsEl = document.getElementById("term-years");
      const paymentsPerYearEl = document.getElementById("payments-per-year");
      const extraPaymentEl = document.getElementById("extra-payment");
      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorEl = document.getElementById("error-message");

      const targetPaymentEl = document.getElementById("target-payment");
      const annualRateRevEl = document.getElementById("annual-rate-rev");
      const termYearsRevEl = document.getElementById("term-years-rev");
      const paymentsPerYearRevEl = document.getElementById(
        "payments-per-year-rev"
      );
      const calculateRevBtn = document.getElementById("calculate-rev-btn");
      const errorRevEl = document.getElementById("error-message-rev");

      const resultPaymentEl = document.getElementById("result-payment");
      const resultTotalPaidEl = document.getElementById("result-total-paid");
      const resultTotalInterestEl = document.getElementById(
        "result-total-interest"
      );
      const resultNumPaymentsEl = document.getElementById(
        "result-num-payments"
      );
      const resultEarEl = document.getElementById("result-ear");
      const amortBodyEl = document.getElementById("amortization-body");

      function formatMoney(value) {
        if (!isFinite(value)) return "-";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "-";
        return (
          (value * 100).toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          }) + "%"
        );
      }

      function renderAmortization(rows) {
        amortBodyEl.innerHTML = "";
        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 text-left text-gray-700">${row.period}</td>
        <td class="px-3 py-1 text-right text-gray-700">${formatMoney(
          row.payment
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${formatMoney(
          row.interest
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${formatMoney(
          row.principal
        )}</td>
        <td class="px-3 py-1 text-right text-gray-700">${formatMoney(
          row.balance
        )}</td>
      `;
          amortBodyEl.appendChild(tr);
        });
      }

      function handleForwardCalculation() {
        errorEl.classList.add("hidden");
        const L = parseFloat(loanAmountEl.value);
        const annualRate = parseFloat(annualRateEl.value);
        const years = parseFloat(termYearsEl.value);
        const paymentsPerYear = parseInt(paymentsPerYearEl.value, 10);
        const extra = parseFloat(extraPaymentEl.value) || 0;

        if (
          !(L > 0) ||
          !(years > 0) ||
          !(paymentsPerYear > 0) ||
          annualRate < 0
        ) {
          errorEl.textContent =
            "Please enter valid positive values for loan amount, term, and payments per year.";
          errorEl.classList.remove("hidden");
          return;
        }

        const { P, n, r, ear, error } = calculatePayment(
          L,
          annualRate,
          years,
          paymentsPerYear
        );
        if (error) {
          errorEl.textContent = error;
          errorEl.classList.remove("hidden");
          return;
        }

        const { rows, totalPaid, totalInterest } = buildAmortization(
          L,
          P,
          r,
          n,
          extra
        );

        resultPaymentEl.textContent = formatMoney(P + extra);
        resultTotalPaidEl.textContent = formatMoney(totalPaid);
        resultTotalInterestEl.textContent = formatMoney(totalInterest);
        resultNumPaymentsEl.textContent = rows.length.toString();
        resultEarEl.textContent = formatPercent(ear);

        renderAmortization(rows);
      }

      function handleReverseCalculation() {
        errorRevEl.classList.add("hidden");
        const P = parseFloat(targetPaymentEl.value);
        const annualRate = parseFloat(annualRateRevEl.value);
        const years = parseFloat(termYearsRevEl.value);
        const paymentsPerYear = parseInt(paymentsPerYearRevEl.value, 10);

        if (
          !(P > 0) ||
          !(years > 0) ||
          !(paymentsPerYear > 0) ||
          annualRate < 0
        ) {
          errorRevEl.textContent =
            "Please enter valid positive values for payment, term, and payments per year.";
          errorRevEl.classList.remove("hidden");
          return;
        }

        const { L, n, r, ear, error } = calculatePrincipalFromPayment(
          P,
          annualRate,
          years,
          paymentsPerYear
        );
        if (error) {
          errorRevEl.textContent = error;
          errorRevEl.classList.remove("hidden");
          return;
        }

        // For reverse mode, we still show an amortization schedule based on the implied loan
        const { rows, totalPaid, totalInterest } = buildAmortization(
          L,
          P,
          r,
          n,
          0
        );

        resultPaymentEl.textContent = formatMoney(L);
        resultTotalPaidEl.textContent = formatMoney(totalPaid);
        resultTotalInterestEl.textContent = formatMoney(totalInterest);
        resultNumPaymentsEl.textContent = rows.length.toString();
        resultEarEl.textContent = formatPercent(ear);

        renderAmortization(rows);
      }

      calculateBtn.addEventListener("click", handleForwardCalculation);
      calculateRevBtn.addEventListener("click", handleReverseCalculation);

      resetBtn.addEventListener("click", () => {
        loanAmountEl.value = 25000;
        annualRateEl.value = 6;
        termYearsEl.value = 5;
        paymentsPerYearEl.value = 12;
        extraPaymentEl.value = 0;
        errorEl.classList.add("hidden");
        handleForwardCalculation();
      });

      // Amortization toggle
      const toggleAmortBtn = document.getElementById("toggle-amortization");
      const amortContainer = document.getElementById("amortization-container");
      toggleAmortBtn.addEventListener("click", () => {
        const hidden = amortContainer.classList.toggle("hidden");
        toggleAmortBtn.textContent = hidden ? "Show table" : "Hide table";
      });

      // Initial calculation on load
      document.addEventListener("DOMContentLoaded", handleForwardCalculation);
    </script>

