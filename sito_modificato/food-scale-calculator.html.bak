    <script>
      // Ingredient density data (approximate, per 1 cup)
      const ingredientData = [
        { id: "flour", name: "All-purpose flour", gramsPerCup: 120 },
        { id: "bread_flour", name: "Bread flour", gramsPerCup: 130 },
        {
          id: "whole_wheat_flour",
          name: "Whole wheat flour",
          gramsPerCup: 120,
        },
        { id: "sugar", name: "Granulated sugar", gramsPerCup: 200 },
        { id: "brown_sugar", name: "Brown sugar (packed)", gramsPerCup: 220 },
        { id: "powdered_sugar", name: "Powdered sugar", gramsPerCup: 120 },
        { id: "butter", name: "Butter", gramsPerCup: 227 },
        { id: "oil", name: "Olive oil", gramsPerCup: 216 },
        { id: "vegetable_oil", name: "Vegetable oil", gramsPerCup: 218 },
        { id: "water", name: "Water", gramsPerCup: 240 },
        { id: "milk", name: "Milk (whole)", gramsPerCup: 245 },
        { id: "rice", name: "Uncooked white rice", gramsPerCup: 190 },
        { id: "rolled_oats", name: "Rolled oats", gramsPerCup: 90 },
        { id: "honey", name: "Honey", gramsPerCup: 340 },
        { id: "salt", name: "Table salt", gramsPerCup: 288 },
        { id: "cocoa", name: "Cocoa powder (unsweetened)", gramsPerCup: 100 },
        { id: "almonds", name: "Almonds (whole)", gramsPerCup: 143 },
        { id: "chocolate_chips", name: "Chocolate chips", gramsPerCup: 170 },
        { id: "yogurt", name: "Yogurt (plain)", gramsPerCup: 245 },
      ];

      const volumeToMl = {
        cup: 240,
        tbsp: 15,
        tsp: 5,
        ml: 1,
      };

      const gramsToOz = 1 / 28.349523125;

      const ingredientSearchInput =
        document.getElementById("ingredient-search");
      const ingredientSuggestions = document.getElementById(
        "ingredient-suggestions"
      );
      const fromValueInput = document.getElementById("from-value");
      const fromUnitSelect = document.getElementById("from-unit");
      const toUnitSelect = document.getElementById("to-unit");
      const convertBtn = document.getElementById("convert-btn");
      const swapBtn = document.getElementById("swap-units");
      const resetBtn = document.getElementById("reset-calculator");
      const resultMain = document.getElementById("result-main");
      const resultSub = document.getElementById("result-sub");
      const densityNote = document.getElementById("density-note");
      const densityIngredientLabel = document.getElementById(
        "density-ingredient-label"
      );
      const densityValueLabel = document.getElementById("density-value-label");
      const quickTableBody = document.getElementById("quick-table-body");

      let selectedIngredient = ingredientData[0]; // default: flour

      function updateDensityNote() {
        densityIngredientLabel.textContent = selectedIngredient.name;
        densityValueLabel.textContent = `${selectedIngredient.gramsPerCup} g per cup`;
      }

      function formatNumber(value, decimals = 1) {
        if (!isFinite(value)) return "0";
        const factor = Math.pow(10, decimals);
        return (Math.round(value * factor) / factor).toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function convert() {
        const fromVal = parseFloat(fromValueInput.value);
        if (isNaN(fromVal) || fromVal < 0) {
          resultMain.textContent = "—";
          resultSub.textContent = "Enter a non-negative number.";
          return;
        }

        const fromUnit = fromUnitSelect.value;
        const toUnit = toUnitSelect.value;

        // If same unit type and both weight or both volume, simple proportional conversion
        let resultValue;
        let explanation = "";

        // Determine if from/to are weight or volume
        const isFromWeight = fromUnit === "g" || fromUnit === "oz";
        const isToWeight = toUnit === "g" || toUnit === "oz";

        if (isFromWeight && isToWeight) {
          // Weight ↔ weight (no density needed)
          let grams;
          if (fromUnit === "g") {
            grams = fromVal;
          } else {
            grams = fromVal * 28.349523125;
          }

          if (toUnit === "g") {
            resultValue = grams;
          } else {
            resultValue = grams * gramsToOz;
          }

          const mainUnitLabel = toUnit === "g" ? "g" : "oz";
          resultMain.textContent = `${formatNumber(
            resultValue,
            1
          )} ${mainUnitLabel}`;
          explanation = `${formatNumber(
            fromVal,
            2
          )} ${fromUnit} ≈ ${formatNumber(resultValue, 1)} ${mainUnitLabel}`;
          resultSub.textContent = explanation;
          return;
        }

        if (!isFromWeight && !isToWeight) {
          // Volume ↔ volume (no density needed)
          const fromMl = fromVal * volumeToMl[fromUnit];
          const toMl = fromMl / volumeToMl[toUnit];

          resultValue = toMl;
          const mainUnitLabel = toUnit;
          resultMain.textContent = `${formatNumber(
            resultValue,
            2
          )} ${mainUnitLabel}`;
          explanation = `${formatNumber(
            fromVal,
            2
          )} ${fromUnit} ≈ ${formatNumber(resultValue, 2)} ${mainUnitLabel}`;
          resultSub.textContent = explanation;
          return;
        }

        // Volume ↔ weight (density needed)
        // Step 1: convert from-unit to base (ml or g)
        let grams;
        let volumeMl;

        if (!isFromWeight && isToWeight) {
          // Volume → weight
          volumeMl = fromVal * volumeToMl[fromUnit];
          const density = selectedIngredient.gramsPerCup / volumeToMl["cup"]; // g per mL
          grams = volumeMl * density;

          if (toUnit === "g") {
            resultValue = grams;
            resultMain.textContent = `${formatNumber(resultValue, 1)} g`;
          } else {
            resultValue = grams * gramsToOz;
            resultMain.textContent = `${formatNumber(resultValue, 2)} oz`;
          }

          explanation = `${formatNumber(
            fromVal,
            2
          )} ${fromUnit} ${selectedIngredient.name.toLowerCase()} ≈ ${
            resultMain.textContent
          }`;
          resultSub.textContent = explanation;
          return;
        }

        if (isFromWeight && !isToWeight) {
          // Weight → volume
          if (fromUnit === "g") {
            grams = fromVal;
          } else {
            grams = fromVal * 28.349523125;
          }
          const density = selectedIngredient.gramsPerCup / volumeToMl["cup"]; // g per mL
          volumeMl = grams / density;
          const toVal = volumeMl / volumeToMl[toUnit];

          resultValue = toVal;
          resultMain.textContent = `${formatNumber(resultValue, 2)} ${toUnit}`;
          explanation = `${formatNumber(
            fromVal,
            2
          )} ${fromUnit} ${selectedIngredient.name.toLowerCase()} ≈ ${
            resultMain.textContent
          }`;
          resultSub.textContent = explanation;
          return;
        }
      }

      function populateQuickTable() {
        const keyIngredients = [
          "flour",
          "sugar",
          "butter",
          "oil",
          "water",
          "rice",
        ];
        const rows = [];
        keyIngredients.forEach((id) => {
          const ing = ingredientData.find((i) => i.id === id);
          if (!ing) return;
          const gPerCup = ing.gramsPerCup;
          const gPerTbsp = gPerCup / (volumeToMl.cup / volumeToMl.tbsp);
          const gPerTsp = gPerCup / (volumeToMl.cup / volumeToMl.tsp);

          rows.push(`
        <tr class="odd:bg-white even:bg-gray-50">
          <td class="px-3 py-2 border-b">${ing.name}</td>
          <td class="px-3 py-2 border-b text-right">${formatNumber(
            gPerCup,
            0
          )} g</td>
          <td class="px-3 py-2 border-b text-right">${formatNumber(
            gPerTbsp,
            1
          )} g</td>
          <td class="px-3 py-2 border-b text-right">${formatNumber(
            gPerTsp,
            1
          )} g</td>
        </tr>
      `);
        });
        quickTableBody.innerHTML = rows.join("");
      }

      function setupIngredientSearch() {
        ingredientSearchInput.value = selectedIngredient.name;

        ingredientSearchInput.addEventListener("input", () => {
          const query = ingredientSearchInput.value.trim().toLowerCase();
          if (!query) {
            ingredientSuggestions.classList.add("hidden");
            ingredientSuggestions.innerHTML = "";
            return;
          }
          const matches = ingredientData
            .filter((ing) => ing.name.toLowerCase().includes(query))
            .slice(0, 20);

          if (!matches.length) {
            ingredientSuggestions.classList.add("hidden");
            ingredientSuggestions.innerHTML = "";
            return;
          }

          ingredientSuggestions.innerHTML = matches
            .map(
              (ing) => `
        <button type="button" class="w-full text-left px-2 py-1 hover:bg-blue-50 text-sm" data-id="${ing.id}">
          ${ing.name}
        </button>
      `
            )
            .join("");
          ingredientSuggestions.classList.remove("hidden");
        });

        ingredientSuggestions.addEventListener("click", (e) => {
          const btn = e.target.closest("button[data-id]");
          if (!btn) return;
          const id = btn.getAttribute("data-id");
          const ing = ingredientData.find((i) => i.id === id);
          if (!ing) return;
          selectedIngredient = ing;
          ingredientSearchInput.value = ing.name;
          ingredientSuggestions.classList.add("hidden");
          updateDensityNote();
          convert();
        });

        document.addEventListener("click", (e) => {
          if (
            !ingredientSuggestions.contains(e.target) &&
            e.target !== ingredientSearchInput
          ) {
            ingredientSuggestions.classList.add("hidden");
          }
        });
      }

      function setupPresets() {
        document.querySelectorAll("button[data-preset]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const id = btn.getAttribute("data-preset");
            const ing = ingredientData.find((i) => i.id === id);
            if (!ing) return;
            selectedIngredient = ing;
            ingredientSearchInput.value = ing.name;
            updateDensityNote();
            // For presets, default to 1 cup → grams
            fromValueInput.value = 1;
            fromUnitSelect.value = "cup";
            toUnitSelect.value = "g";
            convert();
          });
        });
      }

      function setupControls() {
        convertBtn.addEventListener("click", convert);
        fromValueInput.addEventListener("keyup", (e) => {
          if (e.key === "Enter") convert();
        });

        swapBtn.addEventListener("click", () => {
          const fromUnit = fromUnitSelect.value;
          const toUnit = toUnitSelect.value;
          fromUnitSelect.value = toUnit;
          toUnitSelect.value = fromUnit;
          convert();
        });

        resetBtn.addEventListener("click", () => {
          selectedIngredient = ingredientData[0];
          ingredientSearchInput.value = selectedIngredient.name;
          fromValueInput.value = 1;
          fromUnitSelect.value = "cup";
          toUnitSelect.value = "g";
          updateDensityNote();
          convert();
        });

        fromUnitSelect.addEventListener("change", convert);
        toUnitSelect.addEventListener("change", convert);
      }

      function setupFaqToggle() {
        const container = document.getElementById("faq-container");
        if (!container) return;
        container.addEventListener("click", (e) => {
          const btn = e.target.closest(".faq-question");
          if (!btn) return;
          const answer = btn.parentElement.querySelector(".faq-answer");
          const isHidden = answer.classList.contains("hidden");
          // Close others
          container
            .querySelectorAll(".faq-answer")
            .forEach((a) => a.classList.add("hidden"));
          container
            .querySelectorAll(".faq-question span:last-child")
            .forEach((icon) => (icon.textContent = "+"));
          if (isHidden) {
            answer.classList.remove("hidden");
            btn.querySelector("span:last-child").textContent = "−";
          }
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        updateDensityNote();
        populateQuickTable();
        setupIngredientSearch();
        setupPresets();
        setupControls();
        setupFaqToggle();
        convert();
      });
    </script>

