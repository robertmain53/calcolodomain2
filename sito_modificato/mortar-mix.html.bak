    <script>
      // Utility conversions
      const INCH_TO_FT = 1 / 12;
      const MM_TO_M = 0.001;
      const FT3_TO_YD3 = 1 / 27;
      const FT3_TO_M3 = 0.0283168;
      const M3_TO_FT3 = 1 / FT3_TO_M3;

      function getMixRatio() {
        const type = document.getElementById("mortarType").value;
        if (type === "custom") {
          const c =
            parseFloat(document.getElementById("customCement").value) || 0;
          const s =
            parseFloat(document.getElementById("customSand").value) || 0;
          if (c <= 0 || s <= 0) return null;
          return { cement: c, sand: s };
        }
        // Approximate cement:sand ratios for pre-blended masonry cement mixes
        switch (type) {
          case "N":
            return { cement: 1, sand: 3 };
          case "S":
            return { cement: 1, sand: 2.3 };
          case "M":
            return { cement: 1, sand: 2.5 };
          case "O":
            return { cement: 1, sand: 4 };
          default:
            return { cement: 1, sand: 3 };
        }
      }

      function calcFromWall() {
        const wallLength =
          parseFloat(document.getElementById("wallLength").value) || 0;
        const wallHeight =
          parseFloat(document.getElementById("wallHeight").value) || 0;
        const wallLengthUnit = document.getElementById("wallLengthUnit").value;
        const wallHeightUnit = document.getElementById("wallHeightUnit").value;

        const unitLength =
          parseFloat(document.getElementById("unitLength").value) || 0;
        const unitHeight =
          parseFloat(document.getElementById("unitHeight").value) || 0;
        const unitLengthUnit = document.getElementById("unitLengthUnit").value;
        const unitHeightUnit = document.getElementById("unitHeightUnit").value;

        const jointThickness =
          parseFloat(document.getElementById("jointThickness").value) || 0;
        const jointThicknessUnit =
          document.getElementById("jointThicknessUnit").value;

        const wallThickness =
          parseFloat(document.getElementById("wallThickness").value) || 0;
        const wallThicknessUnit =
          document.getElementById("wallThicknessUnit").value;

        if (
          wallLength <= 0 ||
          wallHeight <= 0 ||
          unitLength <= 0 ||
          unitHeight <= 0 ||
          jointThickness <= 0 ||
          wallThickness <= 0
        ) {
          throw new Error(
            "Please enter positive values for wall and unit dimensions."
          );
        }

        // Convert wall dimensions to feet
        const wallLengthFt =
          wallLengthUnit === "ft" ? wallLength : wallLength * 3.28084;
        const wallHeightFt =
          wallHeightUnit === "ft" ? wallHeight : wallHeight * 3.28084;
        const wallAreaFt2 = wallLengthFt * wallHeightFt;

        // Convert unit dimensions to feet
        const unitLengthFt =
          unitLengthUnit === "in"
            ? unitLength * INCH_TO_FT
            : unitLength * MM_TO_M * 3.28084;
        const unitHeightFt =
          unitHeightUnit === "in"
            ? unitHeight * INCH_TO_FT
            : unitHeight * MM_TO_M * 3.28084;
        const unitFaceAreaFt2 = unitLengthFt * unitHeightFt;

        if (unitFaceAreaFt2 <= 0) {
          throw new Error("Unit face area must be greater than zero.");
        }

        const approxUnits = wallAreaFt2 / unitFaceAreaFt2;

        // Convert joint thickness and wall thickness to feet
        const jointThickFt =
          jointThicknessUnit === "in"
            ? jointThickness * INCH_TO_FT
            : jointThickness * MM_TO_M * 3.28084;
        const wallThickFt =
          wallThicknessUnit === "in"
            ? wallThickness * INCH_TO_FT
            : wallThickness * MM_TO_M * 3.28084;

        // Approximate mortar volume per unit:
        // Assume mortar surrounds unit on all four sides with thickness equal to joint thickness.
        // Simplified: mortar volume per unit ≈ perimeter of unit × joint thickness × wall thickness.
        const unitPerimeterFt = 2 * (unitLengthFt + unitHeightFt);
        const mortarPerUnitFt3 = unitPerimeterFt * jointThickFt * wallThickFt;

        const netMortarVolumeFt3 = approxUnits * mortarPerUnitFt3;

        return {
          netVolumeFt3: netMortarVolumeFt3,
          unitCount: approxUnits,
        };
      }

      function calcFromKnownVolume() {
        const v = parseFloat(document.getElementById("knownVolume").value) || 0;
        const unit = document.getElementById("knownVolumeUnit").value;
        if (v <= 0) {
          throw new Error("Please enter a positive mortar volume.");
        }
        let ft3;
        if (unit === "ft3") ft3 = v;
        else if (unit === "yd3") ft3 = v * 27;
        else ft3 = v * M3_TO_FT3; // m3
        return {
          netVolumeFt3: ft3,
          unitCount: null,
        };
      }

      function formatVolume(ft3) {
        if (!isFinite(ft3) || ft3 <= 0) return "–";
        const yd3 = ft3 * FT3_TO_YD3;
        const m3 = ft3 * FT3_TO_M3;
        return `${ft3.toFixed(2)} ft³ (${yd3.toFixed(2)} yd³, ${m3.toFixed(
          3
        )} m³)`;
      }

      function calculateMortar() {
        const errorEl = document.getElementById("errorMsg");
        errorEl.textContent = "";
        const resultsSummary = document.getElementById("resultsSummary");
        const resultsDetails = document.getElementById("resultsDetails");
        resultsSummary.classList.add("hidden");
        resultsDetails.classList.add("hidden");

        try {
          const ratio = getMixRatio();
          if (!ratio)
            throw new Error("Please enter a valid cement:sand ratio.");

          const mode = document.querySelector(
            'input[name="calcMode"]:checked'
          ).value;
          const base = mode === "wall" ? calcFromWall() : calcFromKnownVolume();

          let netFt3 = base.netVolumeFt3;
          if (!isFinite(netFt3) || netFt3 <= 0) {
            throw new Error(
              "Calculated mortar volume is not valid. Please check your inputs."
            );
          }

          const wastePercent =
            parseFloat(document.getElementById("wastePercent").value) || 0;
          const grossFt3 = netFt3 * (1 + wastePercent / 100);

          const yieldPerBag =
            parseFloat(document.getElementById("yieldPerBag").value) || 0;
          const yieldUnit = document.getElementById("yieldPerBagUnit").value;
          if (yieldPerBag <= 0)
            throw new Error("Yield per bag must be greater than zero.");

          const yieldFt3 =
            yieldUnit === "ft3" ? yieldPerBag : yieldPerBag * M3_TO_FT3;
          const bagCount = grossFt3 / yieldFt3;

          // Approximate dry volume slightly higher than wet volume (shrinkage)
          const dryFt3 = grossFt3 * 1.15;

          const totalParts = ratio.cement + ratio.sand;
          const cementFt3 = dryFt3 * (ratio.cement / totalParts);
          const sandFt3 = dryFt3 * (ratio.sand / totalParts);

          // Water estimate: assume 80 lb bag uses ~5 quarts; scale by bag size
          const bagSize =
            parseFloat(document.getElementById("bagSize").value) || 80;
          const waterPer80lbQt = 5; // mid-range
          const waterPerBagQt = waterPer80lbQt * (bagSize / 80);
          const totalWaterQt = waterPerBagQt * bagCount;
          const totalWaterL = totalWaterQt * 0.946353;
          const totalWaterGal = totalWaterQt / 4;

          // Populate outputs
          document.getElementById("netVolumeOut").textContent =
            formatVolume(netFt3);
          document.getElementById("grossVolumeOut").textContent =
            formatVolume(grossFt3);
          document.getElementById("unitCountOut").textContent = base.unitCount
            ? `${Math.round(base.unitCount).toLocaleString()} units (approx.)`
            : "–";

          document.getElementById("bagCountOut").textContent = `${Math.ceil(
            bagCount
          )} bags (calc: ${bagCount.toFixed(2)})`;
          document.getElementById("dryVolumeOut").textContent =
            formatVolume(dryFt3);
          document.getElementById(
            "cementVolumeOut"
          ).textContent = `${cementFt3.toFixed(2)} ft³ (${(
            cementFt3 * FT3_TO_YD3
          ).toFixed(2)} yd³)`;
          document.getElementById(
            "sandVolumeOut"
          ).textContent = `${sandFt3.toFixed(2)} ft³ (${(
            sandFt3 * FT3_TO_YD3
          ).toFixed(2)} yd³)`;
          document.getElementById(
            "waterOut"
          ).textContent = `${totalWaterGal.toFixed(
            1
          )} gal (${totalWaterL.toFixed(1)} L) approx.`;

          const summary = [];
          summary.push(
            `You need about ${formatVolume(
              grossFt3
            )} of mortar including ${wastePercent.toFixed(0)}% waste.`
          );
          summary.push(
            `That is roughly ${Math.ceil(bagCount)} bag(s) of ${bagSize.toFixed(
              0
            )} lb mortar mix.`
          );
          document.getElementById("summaryText").textContent =
            summary.join(" ");

          resultsSummary.classList.remove("hidden");
          resultsDetails.classList.remove("hidden");
        } catch (err) {
          errorEl.textContent =
            err.message || "An error occurred. Please check your inputs.";
        }
      }

      document.getElementById("mortarType").addEventListener("change", (e) => {
        const showCustom = e.target.value === "custom";
        document
          .getElementById("customRatioWrapper")
          .classList.toggle("hidden", !showCustom);
      });

      document.querySelectorAll('input[name="calcMode"]').forEach((r) => {
        r.addEventListener("change", (e) => {
          const mode = e.target.value;
          document
            .getElementById("wallInputs")
            .classList.toggle("hidden", mode !== "wall");
          document
            .getElementById("volumeInputs")
            .classList.toggle("hidden", mode !== "volume");
        });
      });

      document.getElementById("calcBtn").addEventListener("click", (e) => {
        e.preventDefault();
        calculateMortar();
      });

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("mortarType").value = "N";
        document.getElementById("customCement").value = 1;
        document.getElementById("customSand").value = 3;
        document.getElementById("customRatioWrapper").classList.add("hidden");

        document.querySelector(
          'input[name="calcMode"][value="wall"]'
        ).checked = true;
        document.getElementById("wallInputs").classList.remove("hidden");
        document.getElementById("volumeInputs").classList.add("hidden");

        document.getElementById("wallLength").value = 10;
        document.getElementById("wallHeight").value = 8;
        document.getElementById("wallLengthUnit").value = "ft";
        document.getElementById("wallHeightUnit").value = "ft";

        document.getElementById("unitLength").value = 7.625;
        document.getElementById("unitHeight").value = 2.25;
        document.getElementById("unitLengthUnit").value = "in";
        document.getElementById("unitHeightUnit").value = "in";

        document.getElementById("jointThickness").value = 0.375;
        document.getElementById("jointThicknessUnit").value = "in";
        document.getElementById("wallThickness").value = 3.625;
        document.getElementById("wallThicknessUnit").value = "in";

        document.getElementById("knownVolume").value = 0.5;
        document.getElementById("knownVolumeUnit").value = "yd3";

        document.getElementById("bagSize").value = 80;
        document.getElementById("yieldPerBag").value = 0.7;
        document.getElementById("yieldPerBagUnit").value = "ft3";
        document.getElementById("wastePercent").value = 10;

        document.getElementById("errorMsg").textContent = "";
        document.getElementById("resultsSummary").classList.add("hidden");
        document.getElementById("resultsDetails").classList.add("hidden");
      });

      // Auto-calc on load with defaults
      window.addEventListener("DOMContentLoaded", () => {
        calculateMortar();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
