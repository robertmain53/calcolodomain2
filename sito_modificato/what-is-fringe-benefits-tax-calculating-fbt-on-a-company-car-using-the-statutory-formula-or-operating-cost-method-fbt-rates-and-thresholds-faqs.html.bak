    <script>
      // Tab handling
      const tabs = {
        statutory: {
          tab: document.getElementById("tab-statutory"),
          panel: document.getElementById("panel-statutory"),
        },
        operating: {
          tab: document.getElementById("tab-operating"),
          panel: document.getElementById("panel-operating"),
        },
        compare: {
          tab: document.getElementById("tab-compare"),
          panel: document.getElementById("panel-compare"),
        },
      };

      function activateTab(name) {
        Object.keys(tabs).forEach((key) => {
          const { tab, panel } = tabs[key];
          if (key === name) {
            tab.classList.add("border-blue-600", "text-blue-600");
            tab.classList.remove("border-transparent", "text-gray-600");
            panel.classList.remove("hidden");
          } else {
            tab.classList.remove("border-blue-600", "text-blue-600");
            tab.classList.add("border-transparent", "text-gray-600");
            panel.classList.add("hidden");
          }
        });
      }

      tabs.statutory.tab.addEventListener("click", () =>
        activateTab("statutory")
      );
      tabs.operating.tab.addEventListener("click", () =>
        activateTab("operating")
      );
      tabs.compare.tab.addEventListener("click", () => activateTab("compare"));

      // Utility: format currency
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-AU", {
          style: "currency",
          currency: "AUD",
          maximumFractionDigits: 2,
        });
      }

      function clampNonNegative(num) {
        return num < 0 ? 0 : num;
      }

      // Statutory calculation
      const statCalcBtn = document.getElementById("stat-calc-btn");
      const statResetBtn = document.getElementById("stat-reset-btn");

      let lastStatResult = null;
      let lastOpResult = null;

      statCalcBtn.addEventListener("click", () => {
        const baseValue =
          parseFloat(document.getElementById("stat-base-value").value) || 0;
        const daysAvailable =
          parseFloat(document.getElementById("stat-days-available").value) || 0;
        const employeeContrib =
          parseFloat(document.getElementById("stat-employee-contrib").value) ||
          0;
        const fbtRate =
          (parseFloat(document.getElementById("stat-fbt-rate").value) || 0) /
          100;
        const statutoryRate =
          (parseFloat(document.getElementById("stat-statutory-rate").value) ||
            0) / 100;
        const grossupType = document.getElementById("stat-grossup-type").value;
        const grossupType1 =
          parseFloat(document.getElementById("stat-grossup-type1").value) || 0;
        const grossupType2 =
          parseFloat(document.getElementById("stat-grossup-type2").value) || 0;

        if (
          baseValue <= 0 ||
          daysAvailable <= 0 ||
          fbtRate <= 0 ||
          statutoryRate <= 0
        ) {
          alert(
            "Please enter at least car base value, days available, statutory rate and FBT rate."
          );
          return;
        }

        const daysFactor = daysAvailable / 365;
        const baseTaxable = baseValue * statutoryRate * daysFactor;
        const taxableValueRaw = baseTaxable - employeeContrib;
        const taxableValue = clampNonNegative(taxableValueRaw);

        const grossupFactor =
          grossupType === "type1" ? grossupType1 : grossupType2;
        const grossedUp = taxableValue * grossupFactor;
        const fbtPayable = grossedUp * fbtRate;

        document.getElementById("stat-taxable-value").textContent =
          fmtCurrency(taxableValue);
        document.getElementById("stat-grossed-up").textContent =
          fmtCurrency(grossedUp);
        document.getElementById("stat-fbt-payable").textContent =
          fmtCurrency(fbtPayable);
        document.getElementById("stat-employee-contrib-used").textContent =
          fmtCurrency(Math.min(employeeContrib, baseTaxable));

        const steps = [];
        steps.push(
          `Base taxable value before employee contributions = ${fmtCurrency(
            baseTaxable
          )} (car base value × statutory rate × days available ÷ 365).`
        );
        steps.push(
          `Employee contributions deducted = ${fmtCurrency(
            Math.min(employeeContrib, baseTaxable)
          )}.`
        );
        steps.push(
          `Taxable value (before gross‑up) = ${fmtCurrency(taxableValue)}.`
        );
        steps.push(
          `Gross‑up factor used = ${grossupFactor.toFixed(4)} (${
            grossupType === "type1" ? "Type 1" : "Type 2"
          }).`
        );
        steps.push(`Grossed‑up taxable value = ${fmtCurrency(grossedUp)}.`);
        steps.push(`FBT rate = ${(fbtRate * 100).toFixed(2)}%.`);
        steps.push(`FBT payable = ${fmtCurrency(fbtPayable)}.`);

        const stepsContainer = document.getElementById("stat-steps");
        stepsContainer.innerHTML = "";
        steps.forEach((s) => {
          const p = document.createElement("p");
          p.textContent = s;
          stepsContainer.appendChild(p);
        });

        document.getElementById("stat-results").classList.remove("hidden");

        lastStatResult = {
          taxableValue,
          grossedUp,
          fbtPayable,
        };
        updateComparison();
      });

      statResetBtn.addEventListener("click", () => {
        document.getElementById("statutory-form").reset();
        document.getElementById("stat-fbt-rate").value = 47;
        document.getElementById("stat-statutory-rate").value = 20;
        document.getElementById("stat-grossup-type1").value = 2.0802;
        document.getElementById("stat-grossup-type2").value = 1.8868;
        document.getElementById("stat-results").classList.add("hidden");
        lastStatResult = null;
        updateComparison();
      });

      // Operating cost calculation
      const opCalcBtn = document.getElementById("op-calc-btn");
      const opResetBtn = document.getElementById("op-reset-btn");

      opCalcBtn.addEventListener("click", () => {
        const totalCosts =
          parseFloat(document.getElementById("op-total-costs").value) || 0;
        const depreciation =
          parseFloat(document.getElementById("op-depreciation").value) || 0;
        const interest =
          parseFloat(document.getElementById("op-interest").value) || 0;
        const businessUsePct =
          parseFloat(document.getElementById("op-business-use").value) || 0;
        const employeeContrib =
          parseFloat(document.getElementById("op-employee-contrib").value) || 0;
        const fbtRate =
          (parseFloat(document.getElementById("op-fbt-rate").value) || 0) / 100;
        const grossupType = document.getElementById("op-grossup-type").value;
        const grossupType1 =
          parseFloat(document.getElementById("op-grossup-type1").value) || 0;
        const grossupType2 =
          parseFloat(document.getElementById("op-grossup-type2").value) || 0;

        if (totalCosts + depreciation + interest <= 0 || fbtRate <= 0) {
          alert("Please enter at least some operating costs and an FBT rate.");
          return;
        }

        const totalOperating = totalCosts + depreciation + interest;
        const businessUse = Math.min(Math.max(businessUsePct, 0), 100) / 100;
        const privateUse = 1 - businessUse;

        const privatePortion = totalOperating * privateUse;
        const taxableValueRaw = privatePortion - employeeContrib;
        const taxableValue = clampNonNegative(taxableValueRaw);

        const grossupFactor =
          grossupType === "type1" ? grossupType1 : grossupType2;
        const grossedUp = taxableValue * grossupFactor;
        const fbtPayable = grossedUp * fbtRate;

        document.getElementById("op-taxable-value").textContent =
          fmtCurrency(taxableValue);
        document.getElementById("op-grossed-up").textContent =
          fmtCurrency(grossedUp);
        document.getElementById("op-fbt-payable").textContent =
          fmtCurrency(fbtPayable);
        document.getElementById("op-employee-contrib-used").textContent =
          fmtCurrency(Math.min(employeeContrib, privatePortion));

        const steps = [];
        steps.push(
          `Total operating costs = ${fmtCurrency(
            totalOperating
          )} (running costs + depreciation + interest).`
        );
        steps.push(
          `Business use = ${(businessUse * 100).toFixed(1)}%, private use = ${(
            privateUse * 100
          ).toFixed(1)}%.`
        );
        steps.push(
          `Private use portion of costs = ${fmtCurrency(privatePortion)}.`
        );
        steps.push(
          `Employee contributions deducted = ${fmtCurrency(
            Math.min(employeeContrib, privatePortion)
          )}.`
        );
        steps.push(
          `Taxable value (before gross‑up) = ${fmtCurrency(taxableValue)}.`
        );
        steps.push(
          `Gross‑up factor used = ${grossupFactor.toFixed(4)} (${
            grossupType === "type1" ? "Type 1" : "Type 2"
          }).`
        );
        steps.push(`Grossed‑up taxable value = ${fmtCurrency(grossedUp)}.`);
        steps.push(`FBT rate = ${(fbtRate * 100).toFixed(2)}%.`);
        steps.push(`FBT payable = ${fmtCurrency(fbtPayable)}.`);

        const stepsContainer = document.getElementById("op-steps");
        stepsContainer.innerHTML = "";
        steps.forEach((s) => {
          const p = document.createElement("p");
          p.textContent = s;
          stepsContainer.appendChild(p);
        });

        document.getElementById("op-results").classList.remove("hidden");

        lastOpResult = {
          taxableValue,
          grossedUp,
          fbtPayable,
        };
        updateComparison();
      });

      opResetBtn.addEventListener("click", () => {
        document.getElementById("operating-form").reset();
        document.getElementById("op-fbt-rate").value = 47;
        document.getElementById("op-grossup-type1").value = 2.0802;
        document.getElementById("op-grossup-type2").value = 1.8868;
        document.getElementById("op-results").classList.add("hidden");
        lastOpResult = null;
        updateComparison();
      });

      // Comparison view
      function updateComparison() {
        const warning = document.getElementById("compare-warning");
        const results = document.getElementById("compare-results");
        const summary = document.getElementById("compare-summary");
        const rec = document.getElementById("compare-recommendation");

        if (!lastStatResult || !lastOpResult) {
          warning.classList.remove("hidden");
          results.classList.add("hidden");
          summary.classList.add("hidden");
          return;
        }

        warning.classList.add("hidden");
        results.classList.remove("hidden");
        summary.classList.remove("hidden");

        document.getElementById("cmp-stat-fbt").textContent = fmtCurrency(
          lastStatResult.fbtPayable
        );
        document.getElementById("cmp-stat-taxable").textContent = fmtCurrency(
          lastStatResult.taxableValue
        );
        document.getElementById("cmp-stat-grossed").textContent = fmtCurrency(
          lastStatResult.grossedUp
        );

        document.getElementById("cmp-op-fbt").textContent = fmtCurrency(
          lastOpResult.fbtPayable
        );
        document.getElementById("cmp-op-taxable").textContent = fmtCurrency(
          lastOpResult.taxableValue
        );
        document.getElementById("cmp-op-grossed").textContent = fmtCurrency(
          lastOpResult.grossedUp
        );

        if (lastStatResult.fbtPayable < lastOpResult.fbtPayable) {
          rec.textContent = `Based on your inputs, the statutory formula method results in lower FBT (${fmtCurrency(
            lastStatResult.fbtPayable
          )}) than the operating cost method (${fmtCurrency(
            lastOpResult.fbtPayable
          )}).`;
        } else if (lastOpResult.fbtPayable < lastStatResult.fbtPayable) {
          rec.textContent = `Based on your inputs, the operating cost (logbook) method results in lower FBT (${fmtCurrency(
            lastOpResult.fbtPayable
          )}) than the statutory formula method (${fmtCurrency(
            lastStatResult.fbtPayable
          )}).`;
        } else {
          rec.textContent = `Both methods produce the same estimated FBT payable (${fmtCurrency(
            lastStatResult.fbtPayable
          )}). You may choose based on record‑keeping preferences.`;
        }
      }

      // Default to statutory tab
      activateTab("statutory");

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
