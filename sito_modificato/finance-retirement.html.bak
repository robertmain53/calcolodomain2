    <script>
      // Quick Retirement Readiness Check logic
      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        const abs = Math.abs(value);
        let formatted = abs.toLocaleString(undefined, {
          maximumFractionDigits: 0,
        });
        return (value < 0 ? "-$" : "$") + formatted;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const btn = document.getElementById("check-readiness");
        if (!btn) return;

        btn.addEventListener("click", function () {
          const age = parseFloat(document.getElementById("age").value) || 0;
          const retireAge =
            parseFloat(document.getElementById("retire-age").value) || 0;
          const years = Math.max(0, retireAge - age);

          const income =
            parseFloat(document.getElementById("income").value) || 0;
          const savingsRate =
            (parseFloat(document.getElementById("savings-rate").value) || 0) /
            100;
          const currentSavings =
            parseFloat(document.getElementById("current-savings").value) || 0;
          const desiredIncome =
            parseFloat(document.getElementById("desired-income").value) || 0;
          const realReturn =
            (parseFloat(document.getElementById("real-return").value) || 0) /
            100;
          const ssIncome =
            parseFloat(document.getElementById("ss-income").value) || 0;
          const swr =
            (parseFloat(document.getElementById("safe-withdrawal").value) ||
              0) / 100;

          const annualContribution = income * savingsRate;

          // Future value of current savings
          const fvCurrent = currentSavings * Math.pow(1 + realReturn, years);

          // Future value of contributions (ordinary annuity)
          let fvContrib = 0;
          if (realReturn > 0 && years > 0) {
            fvContrib =
              annualContribution *
              ((Math.pow(1 + realReturn, years) - 1) / realReturn);
          } else {
            fvContrib = annualContribution * years;
          }

          const nestEgg = fvCurrent + fvContrib;

          const portfolioNeed =
            swr > 0 ? Math.max(0, (desiredIncome - ssIncome) / swr) : 0;
          const gap = nestEgg - portfolioNeed;

          const output = document.getElementById("readiness-output");
          const banner = document.getElementById("readiness-banner");
          const summary = document.getElementById("readiness-summary");
          const detail = document.getElementById("readiness-detail");
          const note = document.getElementById("readiness-note");
          const nestEl = document.getElementById("readiness-nestegg");
          const targetEl = document.getElementById("readiness-target");
          const gapEl = document.getElementById("readiness-gap");

          nestEl.textContent = formatMoney(nestEgg);
          targetEl.textContent = formatMoney(portfolioNeed);
          gapEl.textContent = formatMoney(gap);

          let statusClass = "border-yellow-300 bg-yellow-50 text-yellow-900";
          let gapClass = "text-yellow-800";

          if (gap >= portfolioNeed * 0.1) {
            summary.textContent =
              "You appear ahead of this simple retirement target.";
            detail.textContent =
              "Your projected nest egg exceeds the target implied by your desired income and withdrawal rate.";
            statusClass = "border-green-300 bg-green-50 text-green-900";
            gapClass = "text-green-700";
          } else if (gap >= -portfolioNeed * 0.1) {
            summary.textContent =
              "You are roughly on track, but with a slim margin of safety.";
            detail.textContent =
              "Small changes in returns, inflation, or spending could move you ahead or behind.";
            statusClass = "border-yellow-300 bg-yellow-50 text-yellow-900";
            gapClass = "text-yellow-800";
          } else {
            summary.textContent =
              "You are currently projected to fall short of this retirement target.";
            detail.textContent =
              "Consider increasing savings, adjusting your retirement age, or revisiting your spending assumptions.";
            statusClass = "border-red-300 bg-red-50 text-red-900";
            gapClass = "text-red-700";
          }

          banner.className = "p-4 rounded-md border " + statusClass;
          gapEl.className = "text-lg font-bold " + gapClass;
          note.textContent =
            "This is a simplified projection using constant real returns and a static withdrawal rate. Use the detailed calculators below and consult a professional for personalized advice.";
          output.classList.remove("hidden");
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
