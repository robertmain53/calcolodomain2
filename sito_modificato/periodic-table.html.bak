          electronegativity: 3.44,
          atomic_radius: 48,
          density: 0.001429,
          meltingK: 54.36,
          boilingK: 90.2,
          oxidation: "−2 (most common)",
          config: "[He] 2s² 2p⁴",
          summary:
            "Oxygen supports combustion and respiration. It is the most abundant element in Earth’s crust and a key component of water.",
        },
        {
          Z: 9,
          symbol: "F",
          name: "Fluorine",
          period: 2,
          group: 17,
          block: "p",
          category: "halogen",
          state: "gas",
          atomic_mass: 18.998,
          electronegativity: 3.98,
          atomic_radius: 42,
          density: 0.001696,
          meltingK: 53.48,
          boilingK: 85.03,
          oxidation: "−1",
          config: "[He] 2s² 2p⁵",
          summary:
            "Fluorine is the most reactive nonmetal, used in fluorinated organics, Teflon, and toothpastes (as fluoride compounds).",
        },
        {
          Z: 10,
          symbol: "Ne",
          name: "Neon",
          period: 2,
          group: 18,
          block: "p",
          category: "noble gas",
          state: "gas",
          atomic_mass: 20.18,
          electronegativity: null,
          atomic_radius: 38,
          density: 0.0008999,
          meltingK: 24.56,
          boilingK: 27.07,
          oxidation: "0",
          config: "[He] 2s² 2p⁶",
          summary:
            "Neon is an inert noble gas best known for its bright red‑orange glow in discharge tubes and advertising signs.",
        },
        // ... (for brevity, not all 118 are listed here, but in production you would include the full set)
      ];

      // Map element to its position (period, group) in our grid.
      // For simplicity we define a minimal mapping for the first 10 and a generic fallback by period/group.
      const PT_POSITIONS = {
        1: { period: 1, group: 1 },
        2: { period: 1, group: 18 },
        3: { period: 2, group: 1 },
        4: { period: 2, group: 2 },
        5: { period: 2, group: 13 },
        6: { period: 2, group: 14 },
        7: { period: 2, group: 15 },
        8: { period: 2, group: 16 },
        9: { period: 2, group: 17 },
        10: { period: 2, group: 18 },
        // For full table, extend mapping for Z=11–118.
      };

      const CATEGORY_COLORS = {
        nonmetal: "bg-emerald-200 border-emerald-400",
        "noble gas": "bg-purple-200 border-purple-400",
        "alkali metal": "bg-orange-200 border-orange-400",
        "alkaline earth metal": "bg-amber-200 border-amber-400",
        metalloid: "bg-lime-200 border-lime-400",
        halogen: "bg-rose-200 border-rose-400",
        "transition metal": "bg-sky-200 border-sky-400",
        "post-transition metal": "bg-slate-200 border-slate-400",
        lanthanide: "bg-lime-200 border-lime-400",
        actinide: "bg-rose-200 border-rose-400",
      };

      function getStateColor(state) {
        if (state === "gas") return "ring-2 ring-red-300";
        if (state === "liquid") return "ring-2 ring-blue-300";
        if (state === "solid") return "ring-2 ring-slate-400";
        return "";
      }

      function colorByNumeric(value, min, max) {
        if (value == null || isNaN(value)) return "bg-gray-100 border-gray-200";
        const t = Math.max(0, Math.min(1, (value - min) / (max - min || 1)));
        // interpolate from blue (low) to red (high)
        const r = Math.round(59 + t * (220 - 59));
        const g = Math.round(130 + t * (38 - 130));
        const b = Math.round(246 + t * (38 - 246));
        return (
          `border border-gray-300` +
          `" style="background-color:rgb(${r},${g},${b});`
        );
      }

      function renderTable(propertyMode = "category") {
        const cells = document.querySelectorAll(".pt-cell");
        cells.forEach((c) => {
          c.innerHTML = "";
          c.className = "pt-cell";
          c.removeAttribute("style");
        });

        let minVal = Infinity,
          maxVal = -Infinity;
        if (
          propertyMode === "electronegativity" ||
          propertyMode === "atomic_mass" ||
          propertyMode === "atomic_radius"
        ) {
          PT_ELEMENTS.forEach((el) => {
            const v = el[propertyMode];
            if (v != null && !isNaN(v)) {
              if (v < minVal) minVal = v;
              if (v > maxVal) maxVal = v;
            }
          });
          if (!isFinite(minVal)) {
            minVal = 0;
            maxVal = 1;
          }
        }

        PT_ELEMENTS.forEach((el) => {
          const pos = PT_POSITIONS[el.Z] || {
            period: el.period,
            group: el.group,
          };
          const selector = `.pt-cell[data-pt-slot="${pos.period}-${pos.group}"]`;
          const cell = document.querySelector(selector);
          if (!cell) return;

          let baseClasses =
            "pt-cell border rounded-md px-1.5 py-1 flex flex-col justify-between";
          let extraClass = "";
          let inlineStyle = "";

          if (propertyMode === "category") {
            extraClass =
              CATEGORY_COLORS[el.category] || "bg-gray-100 border-gray-300";
          } else if (propertyMode === "state") {
            extraClass = "bg-white border-gray-300 " + getStateColor(el.state);
          } else if (
            propertyMode === "electronegativity" ||
            propertyMode === "atomic_mass" ||
            propertyMode === "atomic_radius"
          ) {
            inlineStyle = colorByNumeric(el[propertyMode], minVal, maxVal);
          }

          cell.className = baseClasses + " " + extraClass;
          if (inlineStyle) {
            // inlineStyle already contains border class; we append style attribute
            cell.setAttribute("style", inlineStyle.split('" style="')[1] || "");
          }

          cell.dataset.Z = el.Z;
          cell.dataset.category = el.category;
          cell.dataset.symbol = el.symbol.toLowerCase();
          cell.dataset.name = el.name.toLowerCase();

          cell.innerHTML = `
        <div class="flex justify-between items-start">
          <span class="pt-number text-gray-700">${el.Z}</span>
          <span class="pt-number text-gray-600">${el.atomic_mass.toFixed(
            3
          )}</span>
        </div>
        <div class="flex flex-col items-start mt-0.5">
          <span class="pt-symbol">${el.symbol}</span>
          <span class="pt-name text-gray-700">${el.name}</span>
        </div>
      `;
        });
      }

      function updateDetail(Z) {
        const el = PT_ELEMENTS.find((e) => e.Z === Z) || PT_ELEMENTS[0];
        if (!el) return;
        document.getElementById("pt-detail-name").textContent = el.name;
        document.getElementById("pt-detail-symbol").textContent = el.symbol;
        document.getElementById("pt-detail-category").textContent = el.category
          ? el.category.charAt(0).toUpperCase() + el.category.slice(1)
          : "";
        document.getElementById("pt-detail-number").textContent = el.Z;
        document.getElementById("pt-detail-mass").textContent = el.atomic_mass;
        document.getElementById(
          "pt-detail-period-group"
        ).textContent = `${el.period} / ${el.group}`;
        document.getElementById(
          "pt-detail-block"
        ).textContent = `${el.block}-block`;
        document.getElementById("pt-detail-state").textContent = el.state
          ? el.state.charAt(0).toUpperCase() + el.state.slice(1)
          : "—";
        document.getElementById("pt-detail-density").textContent = el.density
          ? `${el.density} g/cm³`
          : "—";
        document.getElementById("pt-detail-melting").textContent = el.meltingK
          ? `${el.meltingK} K`
          : "—";
        document.getElementById("pt-detail-boiling").textContent = el.boilingK
          ? `${el.boilingK} K`
          : "—";
        document.getElementById("pt-detail-en").textContent =
          el.electronegativity != null
            ? `${el.electronegativity} (Pauling)`
            : "—";
        document.getElementById("pt-detail-radius").textContent =
          el.atomic_radius ? `${el.atomic_radius} pm (covalent)` : "—";
        document.getElementById("pt-detail-oxidation").textContent =
          el.oxidation || "—";
        document.getElementById("pt-detail-config").textContent =
          el.config || "—";
        document.getElementById("pt-detail-summary").textContent =
          el.summary || "";
        document
          .querySelectorAll(".pt-cell")
          .forEach((c) => c.classList.remove("selected"));
        const pos = PT_POSITIONS[el.Z] || {
          period: el.period,
          group: el.group,
        };
        const cell = document.querySelector(
          `.pt-cell[data-pt-slot="${pos.period}-${pos.group}"]`
        );
        if (cell) cell.classList.add("selected");
      }

      function applySearchAndFilter() {
        const q = (document.getElementById("pt-search").value || "")
          .trim()
          .toLowerCase();
        const activeFilterBtn = document.querySelector(
          ".pt-filter-btn.pt-filter-active"
        );
        const filterCategory = activeFilterBtn
          ? activeFilterBtn.dataset.filterCategory
          : "all";

        const cells = document.querySelectorAll(".pt-cell[data-z]");
        cells.forEach((cell) => {
          cell.classList.remove("dimmed");
          const Z = parseInt(cell.dataset.Z, 10);
          const el = PT_ELEMENTS.find((e) => e.Z === Z);
          if (!el) return;

          let matchesSearch = true;
          if (q) {
            const byName = el.name.toLowerCase().includes(q);
            const bySymbol = el.symbol.toLowerCase() === q;
            const byNumber = String(el.Z) === q;
            matchesSearch = byName || bySymbol || byNumber;
          }

          let matchesCategory =
            filterCategory === "all" || el.category === filterCategory;

          if (!matchesSearch || !matchesCategory) {
            cell.classList.add("dimmed");
          }
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        const propertySelect = document.getElementById("pt-property");
        renderTable(propertySelect.value);
        updateDetail(1);

        document.querySelectorAll(".pt-cell").forEach((cell) => {
          cell.addEventListener("click", () => {
            const Z = parseInt(cell.dataset.Z, 10);
            if (!Z) return;
            updateDetail(Z);
          });
        });

        propertySelect.addEventListener("change", () => {
          renderTable(propertySelect.value);
          applySearchAndFilter();
          const selected = document.querySelector(".pt-cell.selected");
          if (selected && selected.dataset.Z) {
            updateDetail(parseInt(selected.dataset.Z, 10));
          }
        });

        document.getElementById("pt-search").addEventListener("input", () => {
          applySearchAndFilter();
        });

        document.querySelectorAll(".pt-filter-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            document
              .querySelectorAll(".pt-filter-btn")
              .forEach((b) =>
                b.classList.remove(
                  "pt-filter-active",
                  "bg-emerald-600",
                  "text-white"
                )
              );
            btn.classList.add(
              "pt-filter-active",
              "bg-emerald-600",
              "text-white"
            );
            applySearchAndFilter();
          });
        });

        // Initialize "All" filter as active
        const allBtn = document.querySelector(
          '.pt-filter-btn[data-filter-category="all"]'
        );
        if (allBtn)
          allBtn.classList.add(
            "pt-filter-active",
            "bg-emerald-600",
            "text-white"
          );
      });
    </script>

