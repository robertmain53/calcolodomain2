    <script>
      /**
       * Julian Day Number (JDN) from proleptic Gregorian date.
       * Accepts year (can be negative for BCE), month 1-12, day 1-31.
       * Algorithm from Fliegel & Van Flandern.
       */
      function gregorianToJDN(year, month, day) {
        let a = Math.floor((14 - month) / 12);
        let y = year + 4800 - a;
        let m = month + 12 * a - 3;
        return (
          day +
          Math.floor((153 * m + 2) / 5) +
          365 * y +
          Math.floor(y / 4) -
          Math.floor(y / 100) +
          Math.floor(y / 400) -
          32045
        );
      }

      /**
       * Gregorian date from JDN.
       * Returns { year, month, day } with proleptic Gregorian year (can be negative).
       */
      function jdnToGregorian(jdn) {
        let a = jdn + 32044;
        let b = Math.floor((4 * a + 3) / 146097);
        let c = a - Math.floor((146097 * b) / 4);
        let d = Math.floor((4 * c + 3) / 1461);
        let e = c - Math.floor((1461 * d) / 4);
        let m = Math.floor((5 * e + 2) / 153);
        let day = e - Math.floor((153 * m + 2) / 5) + 1;
        let month = m + 3 - 12 * Math.floor(m / 10);
        let year = 100 * b + d - 4800 + Math.floor(m / 10);
        return { year, month, day };
      }

      /**
       * Parse ISO date string (YYYY-MM-DD, possibly with negative year like -3113-08-11)
       * into { year, month, day }.
       */
      function parseISODate(str) {
        if (!str) return null;
        // Handle possible leading minus sign for year
        const match = str.match(/^(-?\d+)-(\d{2})-(\d{2})$/);
        if (!match) return null;
        const year = parseInt(match[1], 10);
        const month = parseInt(match[2], 10);
        const day = parseInt(match[3], 10);
        if (month < 1 || month > 12 || day < 1 || day > 31) return null;
        return { year, month, day };
      }

      /**
       * Format Gregorian date as ISO string YYYY-MM-DD (with leading minus for BCE).
       */
      function formatISODate(year, month, day) {
        const yStr = year.toString().padStart(year < 0 ? 5 : 4, "0"); // keep minus
        const mStr = String(month).padStart(2, "0");
        const dStr = String(day).padStart(2, "0");
        return `${yStr}-${mStr}-${dStr}`;
      }

      // Mayan calendar constants and name lists
      const TZOLKIN_NAMES = [
        "Imix’",
        "Ik’",
        "Ak’bal",
        "K’an",
        "Chikchan",
        "Kimi",
        "Manik’",
        "Lamat",
        "Muluk",
        "Ok",
        "Chuwen",
        "Eb’",
        "B’en",
        "Ix",
        "Men",
        "Kib’",
        "Kab’an",
        "Etz’nab’",
        "Kawak",
        "Ajaw",
      ];

      const HAAB_MONTHS = [
        "Pop",
        "Wo",
        "Sip",
        "Sotz’",
        "Sek",
        "Xul",
        "Yaxk’in",
        "Mol",
        "Ch’en",
        "Yax",
        "Sak",
        "Keh",
        "Mak",
        "K’ank’in",
        "Muwan",
        "Pax",
        "K’ayab",
        "Kumk’u",
        "Wayeb",
      ];

      /**
       * Compute Mayan components from day number N (0 = epoch 0.0.0.0.0).
       */
      function dayNumberToMayan(N) {
        if (N < 0) {
          return null; // outside classic Long Count range for this tool
        }

        // Long Count decomposition
        const baktun = Math.floor(N / 144000);
        let rem = N % 144000;
        const katun = Math.floor(rem / 7200);
        rem = rem % 7200;
        const tun = Math.floor(rem / 360);
        rem = rem % 360;
        const uinal = Math.floor(rem / 20);
        const kin = rem % 20;

        const longCountStr = `${baktun}.${katun}.${tun}.${uinal}.${kin}`;

        // Tzolk'in
        const tzNumber = ((N + 3) % 13) + 1; // 4 Ajaw at N=0
        const tzNameIndex = (N + 19) % 20;
        const tzName = TZOLKIN_NAMES[tzNameIndex];
        const tzolkinStr = `${tzNumber} ${tzName}`;

        // Haab
        const h = (N + 348) % 365; // 8 Kumk’u at N=0
        const haabMonthIndex = Math.floor(h / 20);
        const haabDayInMonth = h % 20;
        const haabMonthName = HAAB_MONTHS[haabMonthIndex];
        const haabStr = `${haabDayInMonth} ${haabMonthName}`;

        return {
          baktun,
          katun,
          tun,
          uinal,
          kin,
          longCountStr,
          tzolkinStr,
          haabStr,
        };
      }

      /**
       * Compute day number N from Long Count components.
       */
      function longCountToDayNumber(baktun, katun, tun, uinal, kin) {
        if (
          baktun < 0 ||
          katun < 0 ||
          tun < 0 ||
          uinal < 0 ||
          kin < 0 ||
          katun > 19 ||
          tun > 19 ||
          uinal > 17 ||
          kin > 19
        ) {
          return null;
        }
        return baktun * 144000 + katun * 7200 + tun * 360 + uinal * 20 + kin;
      }

      /**
       * Update result fields in the UI.
       */
      function updateResults({
        longCountStr,
        tzolkinStr,
        haabStr,
        dayNumber,
        gregorianStr,
      }) {
        document.getElementById("out-long-count").textContent =
          longCountStr ?? "–";
        document.getElementById("out-tzolkin").textContent = tzolkinStr ?? "–";
        document.getElementById("out-haab").textContent = haabStr ?? "–";
        document.getElementById("out-daynum").textContent =
          dayNumber !== null && dayNumber !== undefined ? dayNumber : "–";
        document.getElementById("out-gregorian").textContent =
          gregorianStr ?? "–";
      }

      /**
       * Show an error message in the results area.
       */
      function showError(message) {
        updateResults({
          longCountStr: "Error",
          tzolkinStr: message,
          haabStr: "–",
          dayNumber: null,
          gregorianStr: "–",
        });
      }

      // Event handlers
      document.addEventListener("DOMContentLoaded", function () {
        const modeGregBtn = document.getElementById("mode-greg-to-mayan");
        const modeMayanBtn = document.getElementById("mode-mayan-to-greg");
        const formGreg = document.getElementById("form-greg-to-mayan");
        const formMayan = document.getElementById("form-mayan-to-greg");
        const corrSelect = document.getElementById("correlation");

        // Mode switching
        function setMode(mode) {
          if (mode === "greg") {
            formGreg.classList.remove("hidden");
            formMayan.classList.add("hidden");
            modeGregBtn.classList.add("bg-blue-600", "text-white");
            modeGregBtn.classList.remove("bg-gray-100", "text-gray-700");
            modeMayanBtn.classList.add("bg-gray-100", "text-gray-700");
            modeMayanBtn.classList.remove("bg-blue-600", "text-white");
          } else {
            formGreg.classList.add("hidden");
            formMayan.classList.remove("hidden");
            modeMayanBtn.classList.add("bg-blue-600", "text-white");
            modeMayanBtn.classList.remove("bg-gray-100", "text-gray-700");
            modeGregBtn.classList.add("bg-gray-100", "text-gray-700");
            modeGregBtn.classList.remove("bg-blue-600", "text-white");
          }
        }

        modeGregBtn.addEventListener("click", () => setMode("greg"));
        modeMayanBtn.addEventListener("click", () => setMode("mayan"));

        // Gregorian -> Mayan
        document
          .getElementById("btn-convert-greg")
          .addEventListener("click", function () {
            const dateStr = document.getElementById("greg-date").value.trim();
            const corr = parseInt(corrSelect.value, 10);

            const parsed = parseISODate(dateStr);
            if (!parsed) {
              showError(
                "Please enter a valid Gregorian date (YYYY-MM-DD). For BCE, use a leading minus sign, e.g., -3113-08-11."
              );
              return;
            }

            const { year, month, day } = parsed;
            const jdn = gregorianToJDN(year, month, day);
            const N = jdn - corr; // day number since Mayan epoch

            const mayan = dayNumberToMayan(N);
            if (!mayan) {
              showError(
                "Date is outside the supported Long Count range for this converter."
              );
              return;
            }

            updateResults({
              longCountStr: mayan.longCountStr,
              tzolkinStr: mayan.tzolkinStr,
              haabStr: mayan.haabStr,
              dayNumber: N,
              gregorianStr: formatISODate(year, month, day),
            });
          });

        // Mayan -> Gregorian
        document
          .getElementById("btn-convert-mayan")
          .addEventListener("click", function () {
            const corr = parseInt(corrSelect.value, 10);
            const b = parseInt(document.getElementById("lc-baktun").value, 10);
            const k = parseInt(document.getElementById("lc-katun").value, 10);
            const t = parseInt(document.getElementById("lc-tun").value, 10);
            const u = parseInt(document.getElementById("lc-uinal").value, 10);
            const ki = parseInt(document.getElementById("lc-kin").value, 10);

            if ([b, k, t, u, ki].some((v) => isNaN(v))) {
              showError(
                "Please enter numeric values for all Long Count components."
              );
              return;
            }

            const N = longCountToDayNumber(b, k, t, u, ki);
            if (N === null) {
              showError(
                "Invalid Long Count. Check that katun and tun are 0–19, uinal 0–17, and kin 0–19."
              );
              return;
            }

            const jdn = N + corr;
            const { year, month, day } = jdnToGregorian(jdn);
            const gregStr = formatISODate(year, month, day);

            const mayan = dayNumberToMayan(N);
            if (!mayan) {
              showError(
                "Long Count is outside the supported range for this converter."
              );
              return;
            }

            updateResults({
              longCountStr: mayan.longCountStr,
              tzolkinStr: mayan.tzolkinStr,
              haabStr: mayan.haabStr,
              dayNumber: N,
              gregorianStr: gregStr,
            });
          });

        // Initialize with today's date for convenience
        try {
          const today = new Date();
          const y = today.getFullYear();
          const m = today.getMonth() + 1;
          const d = today.getDate();
          const iso = formatISODate(y, m, d);
          const dateInput = document.getElementById("greg-date");
          dateInput.value = iso;
        } catch (e) {
          // ignore
        }
      });
    </script>

