    <script>
      // Tip calculator logic
      (function () {
        const billAmountEl = document.getElementById("billAmount");
        const taxAmountEl = document.getElementById("taxAmount");
        const tipPercentEl = document.getElementById("tipPercent");
        const tipPercentLabelEl = document.getElementById("tipPercentLabel");
        const numPeopleEl = document.getElementById("numPeople");
        const roundingModeEl = document.getElementById("roundingMode");
        const regionPresetEl = document.getElementById("regionPreset");

        const tipBaseDisplay = document.getElementById("tipBaseDisplay");
        const tipAmountDisplay = document.getElementById("tipAmountDisplay");
        const totalBillDisplay = document.getElementById("totalBillDisplay");
        const perPersonTipDisplay = document.getElementById(
          "perPersonTipDisplay"
        );
        const perPersonTotalDisplay = document.getElementById(
          "perPersonTotalDisplay"
        );
        const roundingNote = document.getElementById("roundingNote");

        const copySummaryBtn = document.getElementById("copySummaryBtn");
        const copyStatus = document.getElementById("copyStatus");
        const resetBtn = document.getElementById("resetBtn");

        function parseVal(el) {
          const v = parseFloat(el.value);
          return isNaN(v) ? 0 : v;
        }

        function formatMoney(v) {
          return "$" + v.toFixed(2);
        }

        function updateTipLabel() {
          tipPercentLabelEl.textContent = tipPercentEl.value + "%";
        }

        function calculate() {
          const bill = Math.max(0, parseVal(billAmountEl));
          const tax = Math.max(0, parseVal(taxAmountEl));
          let tipPercent = Math.max(0, parseVal(tipPercentEl));
          let people = Math.max(1, parseInt(numPeopleEl.value || "1", 10));
          numPeopleEl.value = people;

          const tipBaseMode =
            document.querySelector('input[name="tipBase"]:checked')?.value ||
            "pretax";
          const tipBase = tipBaseMode === "pretax" ? bill : bill + tax;

          let tip = tipBase * (tipPercent / 100);
          let total = bill + tax + tip;

          let perPersonTip = tip / people;
          let perPersonTotal = total / people;

          const roundingMode = roundingModeEl.value;
          roundingNote.textContent = "";

          if (roundingMode === "perPerson") {
            const roundedPerPersonTotal = Math.round(perPersonTotal);
            const newTotal = roundedPerPersonTotal * people;
            const newTip = newTotal - bill - tax;
            if (newTip >= 0) {
              tip = newTip;
              total = newTotal;
              perPersonTotal = roundedPerPersonTotal;
              perPersonTip = tip / people;
              roundingNote.textContent =
                "Per-person total rounded to nearest whole currency unit; tip adjusted accordingly.";
            }
          } else if (roundingMode === "total") {
            const roundedTotal = Math.round(total);
            const newTip = roundedTotal - bill - tax;
            if (newTip >= 0) {
              tip = newTip;
              total = roundedTotal;
              perPersonTotal = total / people;
              perPersonTip = tip / people;
              roundingNote.textContent =
                "Total bill rounded to nearest whole currency unit; tip adjusted accordingly.";
            }
          }

          tipBaseDisplay.textContent = formatMoney(tipBase);
          tipAmountDisplay.textContent = formatMoney(tip);
          totalBillDisplay.textContent = formatMoney(total);
          perPersonTipDisplay.textContent = formatMoney(perPersonTip);
          perPersonTotalDisplay.textContent = formatMoney(perPersonTotal);
        }

        // Event bindings
        ["input", "change"].forEach((evt) => {
          billAmountEl.addEventListener(evt, calculate);
          taxAmountEl.addEventListener(evt, calculate);
          tipPercentEl.addEventListener(evt, () => {
            updateTipLabel();
            calculate();
          });
          numPeopleEl.addEventListener(evt, calculate);
          roundingModeEl.addEventListener(evt, calculate);
          regionPresetEl.addEventListener(evt, handleRegionPreset);
        });

        document.querySelectorAll('input[name="tipBase"]').forEach((r) => {
          r.addEventListener("change", calculate);
        });

        document.querySelectorAll("[data-tip-preset]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const val = parseInt(btn.getAttribute("data-tip-preset"), 10);
            tipPercentEl.value = val;
            updateTipLabel();
            calculate();
          });
        });

        document.querySelectorAll("[data-service]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const map = {
              poor: 10,
              ok: 15,
              good: 18,
              great: 20,
              wow: 25,
            };
            const key = btn.getAttribute("data-service");
            const val = map[key] ?? 15;
            tipPercentEl.value = val;
            updateTipLabel();
            calculate();
          });
        });

        function handleRegionPreset() {
          const val = regionPresetEl.value;
          let suggested = null;
          if (val === "us") suggested = 18;
          else if (val === "uk") suggested = 12;
          else if (val === "eu") suggested = 8;
          else if (val === "jp") suggested = 0;
          else if (val === "au") suggested = 10;

          if (suggested !== null) {
            tipPercentEl.value = suggested;
            updateTipLabel();
          }
          calculate();
        }

        copySummaryBtn.addEventListener("click", async () => {
          const bill = Math.max(0, parseVal(billAmountEl));
          const tax = Math.max(0, parseVal(taxAmountEl));
          const tipPercent = Math.max(0, parseVal(tipPercentEl));
          const people = Math.max(1, parseInt(numPeopleEl.value || "1", 10));

          const summary = [
            `Bill: ${formatMoney(bill)}`,
            `Tax: ${formatMoney(tax)}`,
            `Tip: ${tipPercent.toFixed(0)}% (${tipAmountDisplay.textContent})`,
            `Total: ${totalBillDisplay.textContent}`,
            `People: ${people}`,
            `Per person: ${perPersonTotalDisplay.textContent} (incl. ${perPersonTipDisplay.textContent} tip)`,
          ].join("\n");

          try {
            await navigator.clipboard.writeText(summary);
            copyStatus.textContent = "Summary copied to clipboard.";
            setTimeout(() => {
              copyStatus.textContent = "";
            }, 2500);
          } catch (e) {
            copyStatus.textContent =
              "Could not copy (browser blocked clipboard).";
            setTimeout(() => {
              copyStatus.textContent = "";
            }, 3000);
          }
        });

        resetBtn.addEventListener("click", () => {
          billAmountEl.value = "";
          taxAmountEl.value = "";
          tipPercentEl.value = 15;
          numPeopleEl.value = 2;
          roundingModeEl.value = "none";
          regionPresetEl.value = "";
          document.querySelector(
            'input[name="tipBase"][value="pretax"]'
          ).checked = true;
          updateTipLabel();
          calculate();
        });

        // Initial render
        updateTipLabel();
        calculate();
      })();
    </script>

