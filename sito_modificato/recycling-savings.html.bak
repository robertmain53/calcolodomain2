    <script>
      // Core factors (kWh and kg CO2 saved per kg recycled)
      const FACTORS = {
        paper: { energy: 4.0, co2: 1.5 },
        plastic: { energy: 5.0, co2: 2.0 },
        glass: { energy: 0.8, co2: 0.3 },
        metal: { energy: 14.0, co2: 4.0 },
        ewaste: { energy: 10.0, co2: 3.0 },
      };

      function toKg(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v) || v <= 0) return 0;
        return unit === "lb" ? v * 0.45359237 : v;
      }

      function formatNumber(n, decimals = 1) {
        if (!isFinite(n)) return "0";
        if (Math.abs(n) >= 1000) {
          return n.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
          });
        }
        return n.toLocaleString(undefined, {
          minimumFractionDigits: 0,
          maximumFractionDigits: decimals,
        });
      }

      function calculateRecyclingSavings() {
        const unit = document.getElementById("unit-select").value;
        const period = document.getElementById("period-select").value;
        const periodMultiplierSelect =
          document.getElementById("period-multiplier");
        let multiplier = parseFloat(periodMultiplierSelect.value);
        if (isNaN(multiplier) || multiplier <= 0) multiplier = 1;

        const landfillFee =
          parseFloat(document.getElementById("landfill-fee").value) || 0;
        const electricityCO2 =
          parseFloat(document.getElementById("electricity-co2").value) || 400;

        const paperKg = toKg(
          document.getElementById("paper-weight").value,
          unit
        );
        const plasticKg = toKg(
          document.getElementById("plastic-weight").value,
          unit
        );
        const glassKg = toKg(
          document.getElementById("glass-weight").value,
          unit
        );
        const metalKg = toKg(
          document.getElementById("metal-weight").value,
          unit
        );

        let ewasteKg = toKg(
          document.getElementById("ewaste-weight").value,
          unit
        );
        const ewasteItems = parseFloat(
          document.getElementById("ewaste-items").value
        );
        if (ewasteKg === 0 && ewasteItems > 0) {
          ewasteKg = ewasteItems * 0.5; // assume 0.5 kg per small device
        }

        // Adjust for input period to base period (month) then apply multiplier
        let baseFactor = 1;
        if (period === "week") baseFactor = 52 / 12;
        if (period === "year") baseFactor = 1 / 12;

        const periodLabelMap = {
          week: "per week",
          month: "per month",
          year: "per year",
        };

        let resultPeriodLabel = "";
        if (multiplier === 1) {
          resultPeriodLabel = periodLabelMap[period] || "per month";
        } else if (multiplier === 12) {
          resultPeriodLabel = "per year";
        } else if (multiplier === 120) {
          resultPeriodLabel = "over 10 years";
        } else {
          resultPeriodLabel = "";
        }

        const weights = {
          paper: paperKg * baseFactor * multiplier,
          plastic: plasticKg * baseFactor * multiplier,
          glass: glassKg * baseFactor * multiplier,
          metal: metalKg * baseFactor * multiplier,
          ewaste: ewasteKg * baseFactor * multiplier,
        };

        const energy = {
          paper: weights.paper * FACTORS.paper.energy,
          plastic: weights.plastic * FACTORS.plastic.energy,
          glass: weights.glass * FACTORS.glass.energy,
          metal: weights.metal * FACTORS.metal.energy,
          ewaste: weights.ewaste * FACTORS.ewaste.energy,
        };

        const co2 = {
          paper: weights.paper * FACTORS.paper.co2,
          plastic: weights.plastic * FACTORS.plastic.co2,
          glass: weights.glass * FACTORS.glass.co2,
          metal: weights.metal * FACTORS.metal.co2,
          ewaste: weights.ewaste * FACTORS.ewaste.co2,
        };

        const totalWeightKg = Object.values(weights).reduce((a, b) => a + b, 0);
        const totalEnergy = Object.values(energy).reduce((a, b) => a + b, 0);
        const totalCO2 = Object.values(co2).reduce((a, b) => a + b, 0);

        const totalTons = totalWeightKg / 1000;
        const moneySaved = totalTons * landfillFee;

        // Update summary cards
        document.getElementById("money-saved").textContent =
          "$" + formatNumber(moneySaved, 2);
        document.getElementById("energy-saved").textContent =
          formatNumber(totalEnergy, 1) + " kWh";
        document.getElementById("co2-saved").textContent =
          formatNumber(totalCO2, 1) + " kg";

        if (resultPeriodLabel) {
          document.getElementById("money-period-label").textContent =
            resultPeriodLabel;
        } else {
          document.getElementById("money-period-label").textContent = "";
        }

        // Equivalents
        const hours60W = totalEnergy / 0.06; // 60W = 0.06 kW
        document.getElementById("energy-equivalent").textContent =
          "≈ " + formatNumber(hours60W, 0) + " hours of 60 W lighting";

        const carKgPerMile = 0.25;
        const miles = totalCO2 / carKgPerMile;
        document.getElementById("co2-equivalent").textContent =
          "≈ " + formatNumber(miles, 0) + " miles driven by car";

        // Breakdown table
        const breakdownBody = document.getElementById("breakdown-body");
        breakdownBody.innerHTML = "";
        const materialNames = {
          paper: "Paper & cardboard",
          plastic: "Plastic",
          glass: "Glass",
          metal: "Metals",
          ewaste: "E‑waste",
        };

        let anyMaterial = false;
        Object.keys(weights).forEach((key) => {
          if (weights[key] > 0) {
            anyMaterial = true;
            const row = document.createElement("tr");
            row.innerHTML = `
          <td class="px-3 py-2 border">${materialNames[key]}</td>
          <td class="px-3 py-2 border text-right">${formatNumber(
            weights[key],
            1
          )}</td>
          <td class="px-3 py-2 border text-right">${formatNumber(
            energy[key],
            1
          )}</td>
          <td class="px-3 py-2 border text-right">${formatNumber(
            co2[key],
            1
          )}</td>
        `;
            breakdownBody.appendChild(row);
          }
        });

        const breakdownSection = document.getElementById("results-breakdown");
        breakdownSection.classList.toggle("hidden", !anyMaterial);

        // Equivalents list
        const eqList = document.getElementById("equivalents-list");
        eqList.innerHTML = "";
        if (!anyMaterial) {
          eqList.innerHTML =
            "<li>Enter some recycling amounts above to see real‑world equivalents.</li>";
          return;
        }

        const treesSaved = (totalWeightKg / 1000) * 17; // rough: 17 trees per ton of paper
        const householdsElectricity = totalEnergy / 9000; // 9000 kWh/year per household (example)
        const smartphonesCharged = (totalEnergy * 1000) / 0.012; // 12 Wh per full charge

        eqList.innerHTML = `
      <li>Equivalent to avoiding about <strong>${formatNumber(
        miles,
        0
      )}</strong> miles of driving by an average car.</li>
      <li>Enough energy to power a typical home for about <strong>${formatNumber(
        householdsElectricity,
        2
      )}</strong> months (assuming 9000 kWh/year).</li>
      <li>Roughly <strong>${formatNumber(
        smartphonesCharged,
        0
      )}</strong> smartphone charges.</li>
      <li>If all of this were paper, it would correspond to about <strong>${formatNumber(
        treesSaved,
        0
      )}</strong> trees worth of fiber.</li>
    `;
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateRecyclingSavings);

      document.getElementById("reset-btn").addEventListener("click", () => {
        [
          "paper-weight",
          "plastic-weight",
          "glass-weight",
          "metal-weight",
          "ewaste-weight",
          "ewaste-items",
        ].forEach((id) => (document.getElementById(id).value = ""));
        document.getElementById("unit-select").value = "kg";
        document.getElementById("period-select").value = "month";
        document.getElementById("landfill-fee").value = 60;
        document.getElementById("electricity-co2").value = 400;
        document.getElementById("period-multiplier").value = 1;

        document.getElementById("money-saved").textContent = "$0";
        document.getElementById("energy-saved").textContent = "0 kWh";
        document.getElementById("co2-saved").textContent = "0 kg";
        document.getElementById("money-period-label").textContent = "per month";
        document.getElementById("energy-equivalent").textContent =
          "≈ 0 hours of 60 W lighting";
        document.getElementById("co2-equivalent").textContent =
          "≈ 0 miles driven by car";
        document.getElementById("breakdown-body").innerHTML = "";
        document.getElementById("results-breakdown").classList.add("hidden");
        document.getElementById("equivalents-list").innerHTML =
          "<li>Enter some recycling amounts above to see real‑world equivalents.</li>";
      });

      document
        .getElementById("preset-household")
        .addEventListener("click", () => {
          document.getElementById("unit-select").value = "kg";
          document.getElementById("period-select").value = "month";
          document.getElementById("paper-weight").value = 15;
          document.getElementById("plastic-weight").value = 6;
          document.getElementById("glass-weight").value = 8;
          document.getElementById("metal-weight").value = 2;
          document.getElementById("ewaste-weight").value = 0.5;
          document.getElementById("ewaste-items").value = "";
          calculateRecyclingSavings();
        });

      document.getElementById("preset-office").addEventListener("click", () => {
        document.getElementById("unit-select").value = "kg";
        document.getElementById("period-select").value = "month";
        document.getElementById("paper-weight").value = 80;
        document.getElementById("plastic-weight").value = 10;
        document.getElementById("glass-weight").value = 5;
        document.getElementById("metal-weight").value = 5;
        document.getElementById("ewaste-weight").value = 2;
        document.getElementById("ewaste-items").value = "";
        calculateRecyclingSavings();
      });

      // Auto-calc when changing period multiplier if values exist
      document
        .getElementById("period-multiplier")
        .addEventListener("change", calculateRecyclingSavings);
    </script>

