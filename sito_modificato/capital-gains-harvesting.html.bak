    <script>
      // Simple US LTCG 0% bracket tops (approx, for illustration only)
      const zeroBracketLimits = {
        2024: {
          single: 47025,
          mfj: 94050,
          hoh: 70500,
        },
        2025: {
          single: 48500,
          mfj: 97000,
          hoh: 72500,
        },
      };

      function fmtCurrency(v) {
        if (!isFinite(v)) return "$0";
        const sign = v < 0 ? "-" : "";
        v = Math.abs(v);
        return (
          sign +
          v.toLocaleString(undefined, {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }

      function fmtCurrency2(v) {
        if (!isFinite(v)) return "$0.00";
        const sign = v < 0 ? "-" : "";
        v = Math.abs(v);
        return (
          sign +
          v.toLocaleString(undefined, {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 2,
          })
        );
      }

      function fmtPercent(v) {
        if (!isFinite(v)) return "0%";
        return v.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function recalc() {
        const filingStatus = document.getElementById("filing-status").value;
        const taxYear = document.getElementById("tax-year").value;
        const ordinaryIncome =
          parseFloat(document.getElementById("ordinary-income").value) || 0;
        const currentValue =
          parseFloat(document.getElementById("current-value").value) || 0;
        const costBasis =
          parseFloat(document.getElementById("cost-basis").value) || 0;
        const harvestPercent =
          parseFloat(document.getElementById("harvest-percent").value) || 0;
        const ltcgOverride = parseFloat(
          document.getElementById("ltcg-rate-override").value
        );
        const futureRate =
          parseFloat(document.getElementById("expected-future-rate").value) ||
          0;

        const harvestFraction = Math.min(Math.max(harvestPercent / 100, 0), 1);
        const totalGain = Math.max(currentValue - costBasis, 0);
        const amountSold = currentValue * harvestFraction;
        const gainHarvested = totalGain * harvestFraction;

        const yearLimits =
          zeroBracketLimits[taxYear] || zeroBracketLimits["2025"];
        const zeroLimit = yearLimits[filingStatus] || yearLimits.single;
        const roomZero = Math.max(0, zeroLimit - ordinaryIncome);

        const gainAtZero = Math.min(gainHarvested, roomZero);
        const gainAtPositive = Math.max(0, gainHarvested - gainAtZero);

        const appliedLTCGRate = isNaN(ltcgOverride)
          ? 15
          : Math.max(0, ltcgOverride);
        const taxNow = gainAtPositive * (appliedLTCGRate / 100);

        const basisIncrease = gainHarvested;
        const newBasis = costBasis + basisIncrease;
        const futureTaxSaved = basisIncrease * (futureRate / 100);
        const netBenefit = futureTaxSaved - taxNow;
        const benefitPerDollar =
          gainHarvested > 0 ? netBenefit / gainHarvested : 0;
        const effectiveRate =
          gainHarvested > 0 ? (taxNow / gainHarvested) * 100 : 0;

        document.getElementById("res-amount-sold").textContent =
          fmtCurrency(amountSold);
        document.getElementById("res-realized-gain").textContent =
          fmtCurrency(gainHarvested);
        document.getElementById("res-zero-rate-gain").textContent =
          fmtCurrency(gainAtZero);
        document.getElementById("res-positive-rate-gain").textContent =
          fmtCurrency(gainAtPositive);
        document.getElementById("res-tax-now").textContent =
          fmtCurrency2(taxNow);
        document.getElementById("res-effective-rate").textContent =
          fmtPercent(effectiveRate);

        document.getElementById("res-new-basis").textContent =
          fmtCurrency(newBasis);
        document.getElementById("res-basis-step").textContent =
          fmtCurrency(basisIncrease);
        document.getElementById("res-future-savings").textContent =
          fmtCurrency2(futureTaxSaved);
        document.getElementById("res-net-benefit").textContent =
          fmtCurrency2(netBenefit);
        document.getElementById("res-benefit-per-dollar").textContent =
          "$" + benefitPerDollar.toFixed(3);

        document.getElementById("res-zero-bracket-limit").textContent =
          fmtCurrency(zeroLimit);
        document.getElementById("res-ordinary-income").textContent =
          fmtCurrency(ordinaryIncome);
        document.getElementById("res-room-zero").textContent =
          fmtCurrency(roomZero);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const harvestSlider = document.getElementById("harvest-percent");
        const harvestOutput = document.getElementById("harvest-percent-output");
        harvestSlider.addEventListener("input", () => {
          harvestOutput.textContent = harvestSlider.value + "%";
          recalc();
        });

        [
          "filing-status",
          "tax-year",
          "ordinary-income",
          "current-value",
          "cost-basis",
          "ltcg-rate-override",
          "expected-future-rate",
        ].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("input", recalc);
          el.addEventListener("change", recalc);
        });

        document
          .getElementById("btn-max-zero-bracket")
          .addEventListener("click", () => {
            const filingStatus = document.getElementById("filing-status").value;
            const taxYear = document.getElementById("tax-year").value;
            const ordinaryIncome =
              parseFloat(document.getElementById("ordinary-income").value) || 0;
            const currentValue =
              parseFloat(document.getElementById("current-value").value) || 0;
            const costBasis =
              parseFloat(document.getElementById("cost-basis").value) || 0;

            const yearLimits =
              zeroBracketLimits[taxYear] || zeroBracketLimits["2025"];
            const zeroLimit = yearLimits[filingStatus] || yearLimits.single;
            const roomZero = Math.max(0, zeroLimit - ordinaryIncome);

            const totalGain = Math.max(currentValue - costBasis, 0);
            if (totalGain <= 0 || roomZero <= 0) {
              harvestSlider.value = 0;
            } else {
              const targetFraction = Math.min(roomZero / totalGain, 1);
              harvestSlider.value = Math.round(targetFraction * 100);
            }
            harvestOutput.textContent = harvestSlider.value + "%";
            recalc();
          });

        document
          .getElementById("btn-reset-harvest")
          .addEventListener("click", () => {
            harvestSlider.value = 100;
            harvestOutput.textContent = "100%";
            recalc();
          });

        recalc();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
