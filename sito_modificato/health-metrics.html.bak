    <script>
      function toCm(value, unit) {
        if (!value) return null;
        return unit === "in" ? value * 2.54 : value;
      }
      function toKg(value, unit) {
        if (!value) return null;
        return unit === "lb" ? value * 0.45359237 : value;
      }
      function badgeClass(status) {
        switch (status) {
          case "good":
            return "badge bg-green-100 text-green-800";
          case "borderline":
            return "badge bg-yellow-100 text-yellow-800";
          case "high":
            return "badge bg-red-100 text-red-800";
          default:
            return "badge bg-gray-100 text-gray-700";
        }
      }

      function calcBMI(kg, cm) {
        if (!kg || !cm) return null;
        const m = cm / 100;
        return kg / (m * m);
      }

      function bmiCategory(bmi) {
        if (bmi === null) return { label: "–", status: "unknown" };
        if (bmi < 18.5) return { label: "Underweight", status: "borderline" };
        if (bmi < 25) return { label: "Normal weight", status: "good" };
        if (bmi < 30) return { label: "Overweight", status: "borderline" };
        return { label: "Obesity", status: "high" };
      }

      function calcBMR(kg, cm, age, sex) {
        if (!kg || !cm || !age) return null;
        if (sex === "male") {
          return 10 * kg + 6.25 * cm - 5 * age + 5;
        }
        return 10 * kg + 6.25 * cm - 5 * age - 161;
      }

      function estimateBodyFat(kg, cmHeight, cmWaist, cmHip, sex) {
        if (!kg || !cmHeight || !cmWaist) return null;
        const height = cmHeight;
        const waist = cmWaist;
        // crude neck estimate to allow Navy formula without neck input
        const neck = sex === "male" ? 0.37 * height : 0.34 * height;
        if (sex === "male") {
          const val =
            495 /
              (1.0324 -
                0.19077 * Math.log10(waist - neck) +
                0.15456 * Math.log10(height)) -
            450;
          return isFinite(val) ? val : null;
        } else {
          if (!cmHip) return null;
          const val =
            495 /
              (1.29579 -
                0.35004 * Math.log10(waist + cmHip - neck) +
                0.221 * Math.log10(height)) -
            450;
          return isFinite(val) ? val : null;
        }
      }

      function bodyFatCategory(sex, bf) {
        if (bf === null) return { label: "–", status: "unknown" };
        if (sex === "male") {
          if (bf < 6) return { label: "Very low", status: "borderline" };
          if (bf <= 17) return { label: "Athletic / fit", status: "good" };
          if (bf <= 24) return { label: "Average", status: "borderline" };
          return { label: "High", status: "high" };
        } else {
          if (bf < 14) return { label: "Very low", status: "borderline" };
          if (bf <= 24) return { label: "Athletic / fit", status: "good" };
          if (bf <= 31) return { label: "Average", status: "borderline" };
          return { label: "High", status: "high" };
        }
      }

      function whrCategory(sex, whr) {
        if (!whr) return { label: "–", status: "unknown" };
        if (sex === "male") {
          if (whr <= 0.9) return { label: "Low–moderate risk", status: "good" };
          if (whr <= 1.0)
            return { label: "Increased risk", status: "borderline" };
          return { label: "High risk", status: "high" };
        } else {
          if (whr <= 0.85)
            return { label: "Low–moderate risk", status: "good" };
          if (whr <= 0.9)
            return { label: "Increased risk", status: "borderline" };
          return { label: "High risk", status: "high" };
        }
      }

      function hrStatus(resting) {
        if (!resting) return { label: "–", status: "unknown" };
        if (resting < 50)
          return {
            label: "Low (can be normal in athletes)",
            status: "borderline",
          };
        if (resting <= 90) return { label: "Typical range", status: "good" };
        if (resting <= 100)
          return { label: "High‑normal", status: "borderline" };
        return { label: "High – discuss with your clinician", status: "high" };
      }

      function bpCategory(s, d) {
        if (!s || !d)
          return {
            label: "–",
            status: "unknown",
            note: "Enter your blood pressure to see a category.",
          };
        if (s >= 180 || d >= 120) {
          return {
            label: "Hypertensive crisis (seek urgent care)",
            status: "high",
            note: "Your reading is in a range where urgent medical evaluation is usually recommended. If you feel unwell, seek emergency care immediately.",
          };
        }
        if (s >= 140 || d >= 90) {
          return {
            label: "High blood pressure (Stage 2)",
            status: "high",
            note: "This level is associated with increased cardiovascular risk. Please discuss with your healthcare professional.",
          };
        }
        if (s >= 130 || d >= 80) {
          return {
            label: "High blood pressure (Stage 1)",
            status: "borderline",
            note: "Lifestyle changes and medical review are usually recommended at this level.",
          };
        }
        if (s >= 120 && d < 80) {
          return {
            label: "Elevated",
            status: "borderline",
            note: "Blood pressure is above optimal. Healthy lifestyle habits can help prevent progression.",
          };
        }
        return {
          label: "Normal",
          status: "good",
          note: "Your self‑reported blood pressure is in the normal range for most adults.",
        };
      }

      function buildSummary(bmiCat, bfCat, whrCat, hrCat, bpCat) {
        const parts = [];
        if (bmiCat.label && bmiCat.label !== "–") {
          parts.push(`Your BMI falls in the “${bmiCat.label}” range.`);
        }
        if (bfCat.label && bfCat.label !== "–") {
          parts.push(
            `Your estimated body fat is in the “${bfCat.label}” range.`
          );
        }
        if (whrCat.label && whrCat.label !== "–") {
          parts.push(
            `Your waist‑to‑hip ratio suggests ${whrCat.label.toLowerCase()}.`
          );
        }
        if (hrCat.label && hrCat.label !== "–") {
          parts.push(
            `Your resting heart rate is classified as: ${hrCat.label}.`
          );
        }
        if (bpCat.label && bpCat.label !== "–") {
          parts.push(`Your blood pressure category is: ${bpCat.label}.`);
        }
        if (!parts.length) {
          return "Once you enter your details, this section will summarize how your key health metrics compare to typical reference ranges.";
        }
        return (
          parts.join(" ") +
          " Use these results as a starting point for discussion with your healthcare professional and to guide healthy lifestyle changes."
        );
      }

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("healthMetricsForm");
        const calcBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorMsg = document.getElementById("errorMsg");

        function calculate() {
          errorMsg.textContent = "";

          const sex = document.getElementById("sex").value;
          const age = parseFloat(document.getElementById("age").value);
          const heightVal = parseFloat(document.getElementById("height").value);
          const heightUnit = document.getElementById("heightUnit").value;
          const weightVal = parseFloat(document.getElementById("weight").value);
          const weightUnit = document.getElementById("weightUnit").value;
          const waistVal = parseFloat(document.getElementById("waist").value);
          const waistUnit = document.getElementById("waistUnit").value;
          const hipVal = parseFloat(document.getElementById("hip").value);
          const hipUnit = document.getElementById("hipUnit").value;
          const restingHrVal = parseFloat(
            document.getElementById("restingHr").value
          );
          const systolicVal = parseFloat(
            document.getElementById("systolic").value
          );
          const diastolicVal = parseFloat(
            document.getElementById("diastolic").value
          );
          const activityFactor = parseFloat(
            document.getElementById("activityLevel").value
          );

          if (!age || !heightVal || !weightVal) {
            errorMsg.textContent =
              "Please enter at least age, height, and weight.";
            return;
          }

          const cmHeight = toCm(heightVal, heightUnit);
          const kgWeight = toKg(weightVal, weightUnit);
          const cmWaist = waistVal ? toCm(waistVal, waistUnit) : null;
          const cmHip = hipVal ? toCm(hipVal, hipUnit) : null;

          // BMI
          const bmi = calcBMI(kgWeight, cmHeight);
          const bmiCat = bmiCategory(bmi);
          document.getElementById("bmiValue").textContent = bmi
            ? bmi.toFixed(1)
            : "–";
          document.getElementById("bmiCategory").textContent = bmi
            ? `Category: ${bmiCat.label}`
            : "Enter your details to see your BMI.";
          const bmiBadge = document.getElementById("bmiStatusBadge");
          bmiBadge.textContent = bmiCat.label === "–" ? "–" : bmiCat.label;
          bmiBadge.className = badgeClass(bmiCat.status);

          // BMR & TDEE
          const bmr = calcBMR(kgWeight, cmHeight, age, sex);
          const tdee = bmr ? bmr * (activityFactor || 1.2) : null;
          document.getElementById("bmrValue").textContent = bmr
            ? Math.round(bmr)
            : "–";
          document.getElementById("tdeeValue").textContent = tdee
            ? Math.round(tdee)
            : "–";

          // Body fat
          const bf = estimateBodyFat(kgWeight, cmHeight, cmWaist, cmHip, sex);
          const bfCat = bodyFatCategory(sex, bf);
          document.getElementById("bodyFatValue").textContent = bf
            ? bf.toFixed(1) + " %"
            : "–";
          document.getElementById("bodyFatCategory").textContent = bf
            ? `Category: ${bfCat.label}`
            : "Add waist (and hip) to estimate body fat.";
          const bfBadge = document.getElementById("bfStatusBadge");
          bfBadge.textContent = bfCat.label === "–" ? "–" : bfCat.label;
          bfBadge.className = badgeClass(bfCat.status);

          // Heart metrics
          const maxHr = 220 - age;
          const targetLow = maxHr * 0.5;
          const targetHigh = maxHr * 0.85;
          const hrCat = hrStatus(restingHrVal);
          document.getElementById("restingHrValue").textContent = restingHrVal
            ? Math.round(restingHrVal)
            : "–";
          document.getElementById("maxHrValue").textContent = maxHr
            ? Math.round(maxHr)
            : "–";
          document.getElementById("targetZoneValue").textContent = maxHr
            ? `${Math.round(targetLow)}–${Math.round(targetHigh)}`
            : "–";
          const hrBadge = document.getElementById("hrStatusBadge");
          hrBadge.textContent = hrCat.label === "–" ? "–" : hrCat.label;
          hrBadge.className = badgeClass(hrCat.status);

          // Waist & WHR
          let whr = null;
          if (cmWaist && cmHip) {
            whr = cmWaist / cmHip;
          }
          const whrCat = whrCategory(sex, whr);
          document.getElementById("waistValue").textContent = cmWaist
            ? `${cmWaist.toFixed(1)} cm`
            : "–";
          document.getElementById("whrValue").textContent = whr
            ? whr.toFixed(2)
            : "–";
          const whrBadge = document.getElementById("whrStatusBadge");
          whrBadge.textContent = whrCat.label === "–" ? "–" : whrCat.label;
          whrBadge.className = badgeClass(whrCat.status);

          // Blood pressure
          const bpCat = bpCategory(systolicVal, diastolicVal);
          document.getElementById("bpValue").textContent =
            systolicVal && diastolicVal
              ? `${Math.round(systolicVal)}/${Math.round(diastolicVal)} mmHg`
              : "–";
          document.getElementById("bpCategory").textContent = bpCat.note;
          const bpBadge = document.getElementById("bpStatusBadge");
          bpBadge.textContent = bpCat.label === "–" ? "–" : bpCat.label;
          bpBadge.className = badgeClass(bpCat.status);

          // Summary
          document.getElementById("summaryText").textContent = buildSummary(
            bmiCat,
            bfCat,
            whrCat,
            hrCat,
            bpCat
          );
        }

        calcBtn.addEventListener("click", calculate);
        form.addEventListener("submit", function (e) {
          e.preventDefault();
          calculate();
        });

        resetBtn.addEventListener("click", function () {
          form.reset();
          document.getElementById("age").value = 30;
          document.getElementById("height").value = 170;
          document.getElementById("weight").value = 70;
          document.getElementById("heightUnit").value = "cm";
          document.getElementById("weightUnit").value = "kg";
          document.getElementById("activityLevel").value = "1.2";
          errorMsg.textContent = "";
          // Clear outputs
          [
            "bmiValue",
            "bodyFatValue",
            "bmrValue",
            "tdeeValue",
            "restingHrValue",
            "maxHrValue",
            "targetZoneValue",
            "waistValue",
            "whrValue",
            "bpValue",
          ].forEach((id) => {
            document.getElementById(id).textContent = "–";
          });
          document.getElementById("bmiCategory").textContent =
            "Enter your details to see your BMI.";
          document.getElementById("bodyFatCategory").textContent =
            "Add waist (and hip) to estimate body fat.";
          document.getElementById("bpCategory").textContent =
            "Enter your blood pressure to see a category.";
          [
            "bmiStatusBadge",
            "bfStatusBadge",
            "hrStatusBadge",
            "whrStatusBadge",
            "bpStatusBadge",
          ].forEach((id) => {
            const el = document.getElementById(id);
            el.textContent = "–";
            el.className = "badge bg-gray-100 text-gray-700";
          });
          document.getElementById("summaryText").textContent =
            "Fill in your details and click “Calculate health metrics” to see a personalized summary of your current profile.";
        });

        // Initial calculation with defaults
        calculate();
      });
    </script>

