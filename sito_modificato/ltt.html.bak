    <script>
      // LTT bands (illustrative, not official). Amounts in GBP, rates as decimals.
      const bandsResidentialMain = [
        { from: 0, to: 225000, rate: 0.0 },
        { from: 225000, to: 400000, rate: 0.06 },
        { from: 400000, to: 750000, rate: 0.075 },
        { from: 750000, to: 1500000, rate: 0.1 },
        { from: 1500000, to: Infinity, rate: 0.12 },
      ];

      const bandsResidentialAdditional = bandsResidentialMain.map((b) => ({
        from: b.from,
        to: b.to,
        rate: b.rate + 0.04, // 4 percentage point surcharge
      }));

      const bandsNonRes = [
        { from: 0, to: 225000, rate: 0.0 },
        { from: 225000, to: 250000, rate: 0.01 },
        { from: 250000, to: 1000000, rate: 0.05 },
        { from: 1000000, to: Infinity, rate: 0.06 },
      ];

      function formatMoney(value) {
        return (
          "£" +
          value.toLocaleString("en-GB", {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
          })
        );
      }

      function formatMoney2(value) {
        return (
          "£" +
          value.toLocaleString("en-GB", {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      function getSelectedPropertyType() {
        const active = document.querySelector(".property-type-btn.bg-blue-50");
        return active ? active.getAttribute("data-property-type") : "main";
      }

      function calculateBands(price, bands) {
        const rows = [];
        let totalTax = 0;

        for (const band of bands) {
          const taxable = Math.max(0, Math.min(price, band.to) - band.from);
          if (taxable <= 0) continue;
          const tax = taxable * band.rate;
          totalTax += tax;

          rows.push({
            label: `${formatMoney(band.from + 1)} – ${
              band.to === Infinity ? "∞" : formatMoney(band.to)
            }`,
            taxable,
            rate: band.rate,
            tax,
          });
        }

        return { rows, totalTax };
      }

      function estimateNonResLeaseTax(annualRent, termYears) {
        if (!annualRent || annualRent <= 0 || !termYears || termYears <= 0)
          return 0;

        // Very simplified NPV: assume 3% discount rate and level rent
        const r = 0.03;
        let npv = 0;
        for (let t = 1; t <= termYears; t++) {
          npv += annualRent / Math.pow(1 + r, t);
        }

        // Apply non-res bands to NPV of rent
        const { totalTax } = calculateBands(npv, bandsNonRes);
        return totalTax;
      }

      function recalc() {
        const priceInput = document.getElementById("price");
        const priceSlider = document.getElementById("price-slider");
        let price = parseFloat(priceInput.value);
        if (isNaN(price) || price < 0) price = 0;

        // Sync slider within its range
        const sliderMin = parseFloat(priceSlider.min);
        const sliderMax = parseFloat(priceSlider.max);
        if (price < sliderMin) priceSlider.value = sliderMin;
        else if (price > sliderMax) priceSlider.value = sliderMax;
        else priceSlider.value = price;

        const propertyType = getSelectedPropertyType();
        let bands;
        if (propertyType === "main") bands = bandsResidentialMain;
        else if (propertyType === "additional")
          bands = bandsResidentialAdditional;
        else bands = bandsNonRes;

        const { rows, totalTax: purchaseTax } = calculateBands(price, bands);

        let leaseTax = 0;
        if (propertyType === "nonres") {
          const annualRent =
            parseFloat(document.getElementById("annual-rent").value) || 0;
          const termYears =
            parseInt(document.getElementById("lease-term").value, 10) || 0;
          leaseTax = estimateNonResLeaseTax(annualRent, termYears);
        }

        const totalLTT = purchaseTax + leaseTax;

        // Update summary
        document.getElementById("ltt-total").textContent =
          formatMoney2(totalLTT);
        const effectiveRate = price > 0 ? (totalLTT / price) * 100 : 0;
        document.getElementById(
          "effective-rate"
        ).textContent = `Effective rate: ${effectiveRate.toFixed(
          2
        )}% of purchase price`;
        document.getElementById("total-cost").textContent = formatMoney2(
          price + totalLTT
        );

        // Update band table
        const tbody = document.getElementById("bands-body");
        tbody.innerHTML = "";

        if (rows.length === 0 && leaseTax === 0) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="4" class="px-3 py-2 text-center text-gray-500">No LTT due at this price.</td>`;
          tbody.appendChild(tr);
          return;
        }

        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b">${row.label}</td>
        <td class="px-3 py-2 border-b text-right">${formatMoney(
          row.taxable
        )}</td>
        <td class="px-3 py-2 border-b text-right">${(row.rate * 100).toFixed(
          1
        )}%</td>
        <td class="px-3 py-2 border-b text-right">${formatMoney2(row.tax)}</td>
      `;
          tbody.appendChild(tr);
        });

        if (leaseTax > 0) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b italic">Lease rent (NPV estimate)</td>
        <td class="px-3 py-2 border-b text-right">—</td>
        <td class="px-3 py-2 border-b text-right">Bands as above</td>
        <td class="px-3 py-2 border-b text-right">${formatMoney2(leaseTax)}</td>
      `;
          tbody.appendChild(tr);
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const priceInput = document.getElementById("price");
        const priceSlider = document.getElementById("price-slider");
        const propertyButtons = document.querySelectorAll(".property-type-btn");
        const nonresExtra = document.getElementById("nonres-extra-fields");
        const leaseTerm = document.getElementById("lease-term");
        const annualRent = document.getElementById("annual-rent");

        priceInput.addEventListener("input", recalc);
        priceSlider.addEventListener("input", () => {
          priceInput.value = priceSlider.value;
          recalc();
        });

        propertyButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            propertyButtons.forEach((b) =>
              b.classList.remove(
                "bg-blue-50",
                "border-blue-500",
                "text-blue-700"
              )
            );
            propertyButtons.forEach((b) =>
              b.classList.add("bg-white", "border-gray-300", "text-gray-700")
            );

            btn.classList.remove(
              "bg-white",
              "border-gray-300",
              "text-gray-700"
            );
            btn.classList.add("bg-blue-50", "border-blue-500", "text-blue-700");

            if (btn.getAttribute("data-property-type") === "nonres") {
              nonresExtra.classList.remove("hidden");
            } else {
              nonresExtra.classList.add("hidden");
            }
            recalc();
          });
        });

        leaseTerm.addEventListener("input", recalc);
        annualRent.addEventListener("input", recalc);

        // Set default effective date to today
        const dateInput = document.getElementById("effective-date");
        if (dateInput && !dateInput.value) {
          const today = new Date().toISOString().slice(0, 10);
          dateInput.value = today;
        }

        recalc();
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
