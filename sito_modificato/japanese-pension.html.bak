        function calculatePension() {
            const age = document.getElementById('age').value;
            const years = document.getElementById('years').value;
            
            // Example calculation logic
            if (age && years) {
                const pensionAmount = years * 1000; // Simplified calculation
                document.getElementById('pensionAmount').textContent = `¥${pensionAmount.toLocaleString()}`;
            } else {
                if (!age) document.getElementById('ageError').textContent = "Please enter your age.";
