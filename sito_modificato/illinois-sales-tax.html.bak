    <script>
      // Simple illustrative rate map (not authoritative)
      const IL_STATE_RATE = 6.25; // %
      const ilLocationRates = {
        chicago: { local: 3.0, label: "Chicago (Cook County)" },
        aurora: { local: 2.25, label: "Aurora" },
        naperville: { local: 2.25, label: "Naperville" },
        rockford: { local: 2.0, label: "Rockford" },
        joliet: { local: 2.25, label: "Joliet" },
        springfield: { local: 2.0, label: "Springfield" },
        peoria: { local: 2.25, label: "Peoria" },
        elgin: { local: 2.25, label: "Elgin" },
        waukegan: { local: 2.25, label: "Waukegan" },
        cicero: { local: 2.25, label: "Cicero" },
        cook_generic: { local: 2.75, label: "Cook County – other areas" },
        champaign: { local: 2.0, label: "Champaign" },
        normal: { local: 2.0, label: "Normal" },
        dekalb: { local: 2.0, label: "DeKalb" },
        carbondale: { local: 2.0, label: "Carbondale" },
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "$0.00";
        return "$" + value.toFixed(2);
      }

      function formatRate(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(2).replace(/\.00$/, "") + "%";
      }

      function updateRatesTable() {
        const tbody = document.getElementById("rates-table-body");
        if (!tbody) return;
        tbody.innerHTML = "";
        Object.entries(ilLocationRates).forEach(([key, data]) => {
          const tr = document.createElement("tr");
          const total = IL_STATE_RATE + data.local;
          tr.innerHTML = `
        <td class="px-3 py-2 whitespace-nowrap">${data.label}</td>
        <td class="px-3 py-2 text-right">${formatRate(IL_STATE_RATE)}</td>
        <td class="px-3 py-2 text-right">${formatRate(data.local)}</td>
        <td class="px-3 py-2 text-right font-medium">${formatRate(total)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function recalc() {
        const amountInput = document.getElementById("purchase-amount");
        const locationSelect = document.getElementById("location-select");
        const customRateInput = document.getElementById("custom-rate");
        const mode =
          document.querySelector('input[name="calc-mode"]:checked')?.value ||
          "add";

        let amount = parseFloat(amountInput.value);
        if (!isFinite(amount) || amount < 0) amount = 0;

        const locValue = locationSelect.value;
        let stateRate = IL_STATE_RATE;
        let localRate = 0;
        let totalRate;

        if (locValue === "custom") {
          const custom = parseFloat(customRateInput.value);
          totalRate = isFinite(custom) && custom >= 0 ? custom : 0;
          // We still show state vs local split as "n/a" conceptually, but keep stateRate for reference
          localRate = Math.max(totalRate - stateRate, 0);
        } else {
          const data = ilLocationRates[locValue] || { local: 0 };
          localRate = data.local;
          totalRate = stateRate + localRate;
        }

        let taxableAmount, taxAmount, totalPrice;

        if (mode === "backout") {
          // amount is tax-inclusive total
          taxableAmount =
            totalRate > 0 ? amount / (1 + totalRate / 100) : amount;
          taxAmount = amount - taxableAmount;
          totalPrice = amount;
        } else {
          // add tax on top
          taxableAmount = amount;
          taxAmount = taxableAmount * (totalRate / 100);
          totalPrice = taxableAmount + taxAmount;
        }

        document.getElementById("state-rate").textContent =
          formatRate(stateRate);
        document.getElementById("local-rate").textContent =
          formatRate(localRate);
        document.getElementById("total-rate").textContent =
          formatRate(totalRate);

        document.getElementById("taxable-amount").textContent =
          formatMoney(taxableAmount);
        document.getElementById("sales-tax").textContent =
          formatMoney(taxAmount);
        document.getElementById("total-price").textContent =
          formatMoney(totalPrice);

        const modeNote = document.getElementById("mode-note");
        modeNote.textContent =
          mode === "backout"
            ? "Mode: backing out tax from a tax‑inclusive total."
            : "Mode: adding tax to a pre‑tax price.";
      }

      document.addEventListener("DOMContentLoaded", () => {
        const locationSelect = document.getElementById("location-select");
        const customWrapper = document.getElementById("custom-rate-wrapper");
        const customRateInput = document.getElementById("custom-rate");
        const calcBtn = document.getElementById("calculate-btn");
        const amountInput = document.getElementById("purchase-amount");

        updateRatesTable();
        recalc();

        locationSelect.addEventListener("change", () => {
          if (locationSelect.value === "custom") {
            customWrapper.classList.remove("hidden");
            customRateInput.focus();
          } else {
            customWrapper.classList.add("hidden");
          }
          recalc();
        });

        calcBtn.addEventListener("click", (e) => {
          e.preventDefault();
          recalc();
        });

        amountInput.addEventListener("input", recalc);
        customRateInput.addEventListener("input", recalc);
        document.querySelectorAll('input[name="calc-mode"]').forEach((r) => {
          r.addEventListener("change", recalc);
        });
      });
    </script>

