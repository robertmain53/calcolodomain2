    <!-- Torque unit converter logic -->
    <script>
      (function () {
        "use strict";

        // Base: newton metre (N·m)
        const UNITS = [
          {
            id: "Nm",
            name: "newton metre",
            symbol: "N·m",
            toNm: 1,
            definition: "SI base torque unit, 1 N applied at 1 m.",
          },
          {
            id: "lbf_ft",
            name: "pound-force foot",
            symbol: "ft·lb",
            toNm: 1.3558179483314004, // 1 ft·lbf in N·m
            definition: "1 pound-force at 1 foot (0.3048 m).",
          },
          {
            id: "lbf_in",
            name: "pound-force inch",
            symbol: "in·lb",
            toNm: 0.1129848290276167, // 1 in·lbf in N·m
            definition: "1 pound-force at 1 inch (0.0254 m).",
          },
          {
            id: "N_cm",
            name: "newton centimetre",
            symbol: "N·cm",
            toNm: 0.01,
            definition: "1 newton at 1 centimetre (0.01 m).",
          },
          {
            id: "kgf_m",
            name: "kilogram-force metre",
            symbol: "kgf·m",
            toNm: 9.80665, // 1 kgf = 9.80665 N
            definition: "1 kilogram-force at 1 metre (legacy unit).",
          },
          {
            id: "kgf_cm",
            name: "kilogram-force centimetre",
            symbol: "kgf·cm",
            toNm: 0.0980665, // 1 kgf·cm = 0.01 m * 9.80665 N
            definition: "1 kilogram-force at 1 centimetre (legacy unit).",
          },
        ];

        const valueInput = document.getElementById("torque-value");
        const fromSelect = document.getElementById("from-unit");
        const toSelect = document.getElementById("to-unit");
        const decimalsSelect = document.getElementById("decimals");
        const convertBtn = document.getElementById("convert-btn");

        const resultMain = document.getElementById("result-main");
        const resultEquivalent = document.getElementById("result-equivalent");
        const resultNm = document.getElementById("result-nm");

        const unitsTableBody = document.getElementById("units-table-body");
        const quickTableBody = document.getElementById("quick-table-body");

        function getUnit(id) {
          return (
            UNITS.find(function (u) {
              return u.id === id;
            }) || UNITS[0]
          );
        }

        function formatNumber(value, decimals) {
          if (!isFinite(value)) return "—";
          return value.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
            minimumFractionDigits: 0,
          });
        }

        function convertTorque() {
          const raw = parseFloat(valueInput.value);
          const decimals = parseInt(decimalsSelect.value, 10);

          if (isNaN(raw)) {
            resultMain.textContent = "—";
            resultEquivalent.textContent = "Please enter a valid torque value.";
            resultNm.textContent = "N·m: —";
            fillUnitsTable(NaN, decimals);
            return;
          }

          const fromUnit = getUnit(fromSelect.value);
          const toUnit = getUnit(toSelect.value);

          // First: to N·m
          const tauNm = raw * fromUnit.toNm;
          // Second: to target
          const tauTarget = tauNm / toUnit.toNm;

          resultMain.textContent =
            formatNumber(raw, decimals) +
            " " +
            fromUnit.symbol +
            " = " +
            formatNumber(tauTarget, decimals) +
            " " +
            toUnit.symbol;

          resultEquivalent.textContent =
            "Normalised internally to N·m using SI-based factors, then converted to all other units.";

          resultNm.textContent = "N·m: " + formatNumber(tauNm, decimals);

          fillUnitsTable(tauNm, decimals);
        }

        function fillUnitsTable(tauNm, decimals) {
          unitsTableBody.innerHTML = "";

          UNITS.forEach(function (u) {
            const value = tauNm / u.toNm;
            const tr = document.createElement("tr");
            tr.innerHTML =
              '<td class="px-3 py-2 font-medium text-gray-900">' +
              u.name +
              "</td>" +
              '<td class="px-3 py-2 text-gray-800">' +
              u.symbol +
              "</td>" +
              '<td class="px-3 py-2 text-gray-800">' +
              (isNaN(tauNm) ? "—" : formatNumber(value, decimals)) +
              "</td>" +
              '<td class="px-3 py-2 text-gray-600 text-xs">' +
              u.definition +
              "</td>";
            unitsTableBody.appendChild(tr);
          });
        }

        function buildQuickTable() {
          if (!quickTableBody) return;

          // Typical torque values in N·m
          const nmValues = [5, 10, 20, 40, 60, 80, 100, 150, 200];

          quickTableBody.innerHTML = "";
          nmValues.forEach(function (nm) {
            const ftLbUnit = getUnit("lbf_ft");
            const inLbUnit = getUnit("lbf_in");

            const ftLb = nm / ftLbUnit.toNm;
            const inLb = nm / inLbUnit.toNm;

            const tr = document.createElement("tr");
            tr.innerHTML =
              '<td class="px-3 py-2 font-medium text-gray-900">' +
              formatNumber(nm, 0) +
              "</td>" +
              '<td class="px-3 py-2 text-gray-800">' +
              formatNumber(ftLb, 2) +
              "</td>" +
              '<td class="px-3 py-2 text-gray-800">' +
              formatNumber(inLb, 1) +
              "</td>";
            quickTableBody.appendChild(tr);
          });
        }

        convertBtn.addEventListener("click", convertTorque);
        valueInput.addEventListener("keyup", function (e) {
          if (e.key === "Enter") convertTorque();
        });
        decimalsSelect.addEventListener("change", convertTorque);
        fromSelect.addEventListener("change", convertTorque);
        toSelect.addEventListener("change", convertTorque);

        // Initial table build
        fillUnitsTable(NaN, parseInt(decimalsSelect.value, 10));
        buildQuickTable();
      })();
    </script>
  
