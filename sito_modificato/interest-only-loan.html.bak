    <script>
      // Tab switching
      const tabSummary = document.getElementById("tabSummary");
      const tabSchedule = document.getElementById("tabSchedule");
      const summaryPanel = document.getElementById("summaryPanel");
      const schedulePanel = document.getElementById("schedulePanel");

      function setActiveTab(tab) {
        if (tab === "summary") {
          tabSummary.classList.add("tab-button-active");
          tabSummary.classList.remove("tab-button-inactive");
          tabSchedule.classList.add("tab-button-inactive");
          tabSchedule.classList.remove("tab-button-active");
          summaryPanel.classList.remove("hidden");
          schedulePanel.classList.add("hidden");
        } else {
          tabSchedule.classList.add("tab-button-active");
          tabSchedule.classList.remove("tab-button-inactive");
          tabSummary.classList.add("tab-button-inactive");
          tabSummary.classList.remove("tab-button-active");
          summaryPanel.classList.add("hidden");
          schedulePanel.classList.remove("hidden");
        }
      }

      tabSummary.addEventListener("click", () => setActiveTab("summary"));
      tabSchedule.addEventListener("click", () => setActiveTab("schedule"));

      // Calculator logic
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function calculateInterestOnlyLoan() {
        const P = parseFloat(document.getElementById("loanAmount").value) || 0;
        const annualRate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const yearsTotal =
          parseFloat(document.getElementById("loanTerm").value) || 0;
        let ioYears = parseFloat(document.getElementById("ioYears").value) || 0;
        const extra =
          parseFloat(document.getElementById("extraPrincipal").value) || 0;

        if (P <= 0 || annualRate < 0 || yearsTotal <= 0) {
          return;
        }

        // Clamp IO years
        if (ioYears < 0) ioYears = 0;
        if (ioYears > yearsTotal) ioYears = yearsTotal;
        document.getElementById("ioYears").value = ioYears;

        const i = annualRate / 100 / 12;
        const nTotal = Math.round(yearsTotal * 12);
        const nIo = Math.round(ioYears * 12);
        const nRepay = nTotal - nIo;

        // Interest-only payment
        const ioPayment = P * i;

        // Payment after IO period (if any repayment period left)
        let piPayment = 0;
        if (nRepay > 0 && i > 0) {
          piPayment =
            (P * (i * Math.pow(1 + i, nRepay))) / (Math.pow(1 + i, nRepay) - 1);
        } else if (nRepay > 0 && i === 0) {
          piPayment = P / nRepay;
        }

        // Build schedule with IO then PI, including extra principal
        let balance = P;
        let totalInterestIoStructure = 0;
        const scheduleBody = document.getElementById("scheduleBody");
        scheduleBody.innerHTML = "";
        let month = 0;

        while (balance > 0 && month < 1000 * 12) {
          month++;
          const isIoPhase = month <= nIo;
          const requiredPayment = isIoPhase
            ? ioPayment
            : nRepay > 0
            ? piPayment
            : 0;

          const interestPortion = balance * i;
          let principalPortion = requiredPayment - interestPortion;
          if (principalPortion < 0) principalPortion = 0;

          let extraPay = extra;
          // Ensure we don't overpay beyond remaining balance + interest
          const maxPrincipalThisMonth = balance - principalPortion;
          if (extraPay > maxPrincipalThisMonth) {
            extraPay = Math.max(0, maxPrincipalThisMonth);
          }

          const totalPrincipalThisMonth = principalPortion + extraPay;
          balance = balance - totalPrincipalThisMonth;
          if (balance < 1e-8) balance = 0;

          totalInterestIoStructure += interestPortion;

          const row = document.createElement("tr");
          row.innerHTML = `
        <td class="px-2 py-1">${month}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(requiredPayment)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(interestPortion)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(
          principalPortion
        )}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(extraPay)}</td>
        <td class="px-2 py-1 text-right">${formatCurrency(balance)}</td>
      `;
          scheduleBody.appendChild(row);

          if (balance <= 0) break;
        }

        // Total interest for a standard fully amortizing loan with same term & extra principal
        let balanceStd = P;
        let totalInterestStd = 0;
        const nStd = nTotal;
        let stdPayment = 0;
        if (i > 0) {
          stdPayment =
            (P * (i * Math.pow(1 + i, nStd))) / (Math.pow(1 + i, nStd) - 1);
        } else {
          stdPayment = P / nStd;
        }

        let m = 0;
        while (balanceStd > 0 && m < 1000 * 12) {
          m++;
          const interestStd = balanceStd * i;
          let principalStd = stdPayment - interestStd;
          if (principalStd < 0) principalStd = 0;

          let extraStd = extra;
          const maxPrincipalStd = balanceStd - principalStd;
          if (extraStd > maxPrincipalStd) {
            extraStd = Math.max(0, maxPrincipalStd);
          }

          const totalPrincipalStd = principalStd + extraStd;
          balanceStd -= totalPrincipalStd;
          if (balanceStd < 1e-8) balanceStd = 0;

          totalInterestStd += interestStd;
          if (balanceStd <= 0) break;
        }

        const extraInterestCost = totalInterestIoStructure - totalInterestStd;

        // Update UI
        document.getElementById("ioPaymentDisplay").textContent =
          formatCurrency(ioPayment);
        document.getElementById("piPaymentDisplay").textContent =
          nRepay > 0 ? formatCurrency(piPayment) : "—";

        document.getElementById("totalInterestIoLabel").textContent =
          formatCurrency(totalInterestIoStructure);
        document.getElementById("totalInterestStdLabel").textContent =
          formatCurrency(totalInterestStd);
        document.getElementById("extraInterestLabel").textContent =
          formatCurrency(extraInterestCost);

        document.getElementById("ioYearsSummary").textContent =
          ioYears.toFixed(0);
        document.getElementById("repayYearsSummary").textContent = (
          yearsTotal - ioYears
        ).toFixed(0);
        document.getElementById("lowestPaymentSummary").textContent =
          formatCurrency(ioPayment);
        document.getElementById("jumpPaymentSummary").textContent =
          nRepay > 0 ? formatCurrency(piPayment) : "—";
        document.getElementById("totalInterestIoSummary").textContent =
          formatCurrency(totalInterestIoStructure);
        document.getElementById("totalInterestStdSummary").textContent =
          formatCurrency(totalInterestStd);
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", calculateInterestOnlyLoan);
      [
        "loanAmount",
        "interestRate",
        "loanTerm",
        "ioYears",
        "extraPrincipal",
      ].forEach((id) => {
        document
          .getElementById(id)
          .addEventListener("change", calculateInterestOnlyLoan);
      });

      // Initial calculation
      calculateInterestOnlyLoan();

