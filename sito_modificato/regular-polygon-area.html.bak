    <script>
      // Regular Polygon Area Calculator Logic
      (function () {
        const nInput = document.getElementById("rp-n-sides");
        const modeButtons = document.querySelectorAll(".rp-mode-btn");
        const inputValue = document.getElementById("rp-input-value");
        const inputLabelExtra = document.getElementById("rp-input-label-extra");
        const unitInput = document.getElementById("rp-unit");
        const calcBtn = document.getElementById("rp-calc-btn");
        const clearBtn = document.getElementById("rp-clear-btn");
        const errorBox = document.getElementById("rp-error");
        const resultsEmpty = document.getElementById("rp-results-empty");
        const resultsBox = document.getElementById("rp-results");
        const areaEl = document.getElementById("rp-area");
        const areaFormulaEl = document.getElementById("rp-area-formula");
        const perimEl = document.getElementById("rp-perimeter");
        const sideEl = document.getElementById("rp-side");
        const apothemEl = document.getElementById("rp-apothem");
        const radiusEl = document.getElementById("rp-radius");

        let mode = "side";

        const modeLabels = {
          side: "(side length s)",
          apothem: "(apothem a)",
          radius: "(circumradius R)",
          perimeter: "(perimeter P)",
        };

        function setMode(newMode) {
          mode = newMode;
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === newMode) {
              btn.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              btn.classList.add(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700",
                "font-medium"
              );
            } else {
              btn.classList.remove(
                "border-blue-600",
                "bg-blue-50",
                "text-blue-700",
                "font-medium"
              );
              btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
            }
          });
          inputLabelExtra.textContent = modeLabels[newMode] || "";
          clearError();
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => setMode(btn.dataset.mode));
        });

        function showError(msg) {
          errorBox.textContent = msg;
          errorBox.classList.remove("hidden");
          resultsBox.classList.add("hidden");
          resultsEmpty.classList.remove("hidden");
        }

        function clearError() {
          errorBox.textContent = "";
          errorBox.classList.add("hidden");
        }

        function formatNumber(x, decimals = 6) {
          if (!isFinite(x)) return "—";
          if (Math.abs(x) >= 1e6 || (Math.abs(x) < 1e-4 && x !== 0)) {
            return x.toExponential(4);
          }
          return parseFloat(x.toFixed(decimals)).toString();
        }

        function calculate() {
          clearError();
          const n = parseInt(nInput.value, 10);
          const val = parseFloat(inputValue.value);
          const unit = unitInput.value.trim();

          if (!Number.isInteger(n) || n < 3) {
            showError("Please enter an integer number of sides n ≥ 3.");
            return;
          }
          if (isNaN(val) || val <= 0) {
            showError(
              "Please enter a positive numeric value for the selected quantity."
            );
            return;
          }

          const pi = Math.PI;
          const angle = pi / n;

          let s,
            P,
            a,
            R,
            A,
            formulaText = "";

          try {
            if (mode === "side") {
              s = val;
              P = n * s;
              a = s / (2 * Math.tan(angle));
              R = s / (2 * Math.sin(angle));
              A = (n * s * s) / (4 * Math.tan(angle));
              formulaText = `A = n·s² / (4·tan(π/n)) with n = ${n}, s = ${formatNumber(
                s,
                4
              )}`;
            } else if (mode === "apothem") {
              a = val;
              // derive side from apothem: s = 2 a tan(pi/n)
              s = 2 * a * Math.tan(angle);
              P = n * s;
              R = a / Math.cos(angle);
              A = (P * a) / 2;
              formulaText = `A = P·a / 2 with n = ${n}, a = ${formatNumber(
                a,
                4
              )}`;
            } else if (mode === "radius") {
              R = val;
              // side from radius: s = 2 R sin(pi/n)
              s = 2 * R * Math.sin(angle);
              P = n * s;
              a = R * Math.cos(angle);
              A = (n * R * R * Math.sin(2 * angle)) / 2;
              formulaText = `A = n·R²·sin(2π/n) / 2 with n = ${n}, R = ${formatNumber(
                R,
                4
              )}`;
            } else if (mode === "perimeter") {
              P = val;
              s = P / n;
              a = s / (2 * Math.tan(angle));
              R = s / (2 * Math.sin(angle));
              A = (P * a) / 2;
              formulaText = `A = P·a / 2 with n = ${n}, P = ${formatNumber(
                P,
                4
              )}`;
            } else {
              showError("Unknown mode selected.");
              return;
            }
          } catch (e) {
            showError("Calculation error. Please check your inputs.");
            return;
          }

          const u = unit ? ` ${unit}` : "";
          const u2 = unit ? ` ${unit}\u00b2` : " (squared units)";

          areaEl.textContent = `${formatNumber(A)}${u2}`;
          areaFormulaEl.textContent = formulaText;
          perimEl.textContent = `${formatNumber(P)}${u}`;
          sideEl.textContent = `${formatNumber(s)}${u}`;
          apothemEl.textContent = `${formatNumber(a)}${u}`;
          radiusEl.textContent = `${formatNumber(R)}${u}`;

          resultsEmpty.classList.add("hidden");
          resultsBox.classList.remove("hidden");
        }

        function clearAll() {
          nInput.value = 6;
          inputValue.value = "";
          unitInput.value = "";
          clearError();
          resultsBox.classList.add("hidden");
          resultsEmpty.classList.remove("hidden");
        }

        calcBtn.addEventListener("click", calculate);
        clearBtn.addEventListener("click", clearAll);
        inputValue.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            calculate();
          }
        });
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
