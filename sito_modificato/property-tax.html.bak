    <script>
      // Utility functions
      function getCurrencySymbol() {
        const currency = document.getElementById("currency").value;
        if (currency === "custom") {
          const custom = document
            .getElementById("customCurrencySymbol")
            .value.trim();
          return custom || "";
        }
        const map = { USD: "$", EUR: "€", GBP: "£", INR: "₹" };
        return map[currency] || currency;
      }

      function formatMoney(value) {
        const symbol = getCurrencySymbol();
        if (!isFinite(value)) return symbol + "0.00";
        const abs = Math.abs(value);
        let formatted;
        if (abs >= 1e9) {
          formatted = (value / 1e9).toFixed(2) + "B";
        } else if (abs >= 1e6) {
          formatted = (value / 1e6).toFixed(2) + "M";
        } else if (abs >= 1e3) {
          formatted = (value / 1e3).toFixed(2) + "K";
        } else {
          formatted = value.toFixed(2);
        }
        return symbol + formatted;
      }

      function showError(msg) {
        const el = document.getElementById("errorMsg");
        el.textContent = msg;
        el.classList.remove("hidden");
        document.getElementById("resultsCard").classList.add("hidden");
      }

      function clearError() {
        const el = document.getElementById("errorMsg");
        el.textContent = "";
        el.classList.add("hidden");
      }

      // UI toggles
      document.getElementById("currency").addEventListener("change", () => {
        const wrapper = document.getElementById("custom-currency-wrapper");
        if (document.getElementById("currency").value === "custom") {
          wrapper.classList.remove("hidden");
        } else {
          wrapper.classList.add("hidden");
        }
      });

      document.getElementById("system").addEventListener("change", () => {
        const system = document.getElementById("system").value;
        document
          .getElementById("rate-percent-wrapper")
          .classList.toggle("hidden", system !== "percent");
        document
          .getElementById("rate-mill-wrapper")
          .classList.toggle("hidden", system !== "mill");
        document
          .getElementById("rate-perunit-wrapper")
          .classList.toggle("hidden", system !== "perUnit");
      });

      document.getElementById("resetBtn").addEventListener("click", () => {
        document
          .querySelectorAll(
            "#marketValue,#assessedValue,#assessmentRatio,#exemptions,#credits,#ratePercent,#localRatePercent,#rateMill,#localRateMill,#unitCount,#ratePerUnit,#fixedCharge,#customCurrencySymbol"
          )
          .forEach((el) => (el.value = ""));
        document.getElementById("currency").value = "USD";
        document.getElementById("system").value = "percent";
        document.getElementById("frequency").value = "year";
        document
          .getElementById("custom-currency-wrapper")
          .classList.add("hidden");
        document
          .getElementById("rate-percent-wrapper")
          .classList.remove("hidden");
        document.getElementById("rate-mill-wrapper").classList.add("hidden");
        document.getElementById("rate-perunit-wrapper").classList.add("hidden");
        clearError();
        document.getElementById("resultsCard").classList.add("hidden");
      });

      // Example effective rate button: fill with a typical example
      document
        .getElementById("copyEffectiveRateBtn")
        .addEventListener("click", () => {
          document.getElementById("ratePercent").value = "1.0";
          document.getElementById("localRatePercent").value = "0.2";
        });

      // Core calculation
      document.getElementById("calculateBtn").addEventListener("click", () => {
        clearError();
        const system = document.getElementById("system").value;
        const freq = document.getElementById("frequency").value;

        const marketValue = parseFloat(
          document.getElementById("marketValue").value
        );
        let assessedValue = parseFloat(
          document.getElementById("assessedValue").value
        );
        const assessmentRatio = parseFloat(
          document.getElementById("assessmentRatio").value
        );
        const exemptions =
          parseFloat(document.getElementById("exemptions").value) || 0;
        const credits =
          parseFloat(document.getElementById("credits").value) || 0;

        // Determine assessed value
        if (!isFinite(assessedValue)) {
          if (isFinite(marketValue) && isFinite(assessmentRatio)) {
            assessedValue = marketValue * (assessmentRatio / 100);
          } else if (isFinite(marketValue)) {
            assessedValue = marketValue;
          }
        }

        let taxableValue = 0;
        let grossTax = 0;
        let effectiveRate = 0;

        if (system === "perUnit") {
          const units = parseFloat(document.getElementById("unitCount").value);
          const ratePerUnit = parseFloat(
            document.getElementById("ratePerUnit").value
          );
          const fixedCharge =
            parseFloat(document.getElementById("fixedCharge").value) || 0;

          if (
            !isFinite(units) ||
            units < 0 ||
            !isFinite(ratePerUnit) ||
            ratePerUnit < 0
          ) {
            showError(
              "Please enter a valid number of units and rate per unit."
            );
            return;
          }

          taxableValue = units; // conceptual
          grossTax = units * ratePerUnit + fixedCharge;
          // Effective rate relative to market or assessed value if available
          const base = isFinite(marketValue)
            ? marketValue
            : isFinite(assessedValue)
            ? assessedValue
            : null;
          if (base && base > 0) {
            effectiveRate = (grossTax / base) * 100;
          } else {
            effectiveRate = NaN;
          }
        } else {
          if (!isFinite(assessedValue) || assessedValue <= 0) {
            showError(
              "Please enter at least a market value or an assessed value greater than zero."
            );
            return;
          }

          taxableValue = Math.max(0, assessedValue - exemptions);

          let rateDecimal = 0;
          if (system === "percent") {
            const r = parseFloat(document.getElementById("ratePercent").value);
            const lr =
              parseFloat(document.getElementById("localRatePercent").value) ||
              0;
            if (!isFinite(r) || r < 0) {
              showError("Please enter a valid main tax rate percentage.");
              return;
            }
            rateDecimal = (r + lr) / 100;
          } else if (system === "mill") {
            const m = parseFloat(document.getElementById("rateMill").value);
            const lm =
              parseFloat(document.getElementById("localRateMill").value) || 0;
            if (!isFinite(m) || m < 0) {
              showError("Please enter a valid main mill rate.");
              return;
            }
            rateDecimal = (m + lm) / 1000;
          }

          grossTax = taxableValue * rateDecimal;
          effectiveRate =
            (grossTax /
              (isFinite(marketValue) && marketValue > 0
                ? marketValue
                : assessedValue)) *
            100;
        }

        let netTax = Math.max(0, grossTax - credits);

        // Frequency breakdown
        let perMonth = netTax / 12;
        let perPeriod = netTax;
        if (freq === "half") perPeriod = netTax / 2;
        else if (freq === "quarter") perPeriod = netTax / 4;
        else if (freq === "month") perPeriod = netTax / 12;

        // Populate results
        document.getElementById("resultTaxableValue").textContent =
          system === "perUnit"
            ? taxableValue.toFixed(2) + " units"
            : formatMoney(taxableValue);
        document.getElementById("resultAnnualTax").textContent =
          formatMoney(netTax);
        document.getElementById("resultPerMonth").textContent =
          formatMoney(perMonth);
        document.getElementById("resultPerPeriod").textContent =
          formatMoney(perPeriod);

        const effText =
          isFinite(effectiveRate) && effectiveRate > 0
            ? effectiveRate.toFixed(3).replace(/\.?0+$/, "") + "%"
            : "n/a";
        document.getElementById("resultEffectiveRate").textContent = effText;

        document.getElementById("resultsCard").classList.remove("hidden");
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
