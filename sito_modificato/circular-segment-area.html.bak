    <script>
      // Mobile menu toggle (kept minimal – detailed behavior in mobile-menu.js)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const expanded =
            mobileToggle.getAttribute("aria-expanded") === "true";
          mobileToggle.setAttribute("aria-expanded", String(!expanded));
          mobileMenu.classList.toggle("hidden");
        });
      }

      // Mode switching
      const modeSelect = document.getElementById("mode-select");
      const fieldHeight = document.getElementById("field-height");
      const fieldAngle = document.getElementById("field-angle");
      const fieldChord = document.getElementById("field-chord");

      function updateModeFields() {
        if (!modeSelect) return;
        const mode = modeSelect.value;
        if (fieldHeight)
          fieldHeight.classList.toggle("hidden", mode !== "radius-height");
        if (fieldAngle)
          fieldAngle.classList.toggle("hidden", mode !== "radius-angle");
        if (fieldChord)
          fieldChord.classList.toggle("hidden", mode !== "radius-chord");
      }
      if (modeSelect) {
        modeSelect.addEventListener("change", updateModeFields);
        updateModeFields();
      }

      const radiusInput = document.getElementById("radius-input");
      const heightInput = document.getElementById("height-input");
      const angleInput = document.getElementById("angle-input");
      const angleUnit = document.getElementById("angle-unit");
      const chordInput = document.getElementById("chord-input");
      const calcBtn = document.getElementById("segment-calc-btn");
      const clearBtn = document.getElementById("segment-clear-btn");
      const resultEl = document.getElementById("segment-result");

      function formatNumber(x) {
        if (!isFinite(x)) return "NaN";
        const absx = Math.abs(x);
        if (absx !== 0 && (absx < 1e-4 || absx > 1e7)) {
          return x.toExponential(6);
        }
        return x.toFixed(6).replace(/\.?0+$/, "");
      }

      function showError(msg) {
        if (resultEl) {
          resultEl.innerHTML = '<p class="text-red-600">' + msg + "</p>";
        }
      }

      function calculateSegment() {
        if (!radiusInput || !modeSelect || !resultEl) return;

        const R = parseFloat(radiusInput.value);
        if (!isFinite(R) || R <= 0) {
          showError("Please enter a valid positive radius R.");
          return;
        }

        const mode = modeSelect.value;
        let theta; // in radians
        let h, c;

        if (mode === "radius-height") {
          if (!heightInput) return;
          h = parseFloat(heightInput.value);
          if (!isFinite(h) || h <= 0) {
            showError("Please enter a valid positive segment height h.");
            return;
          }
          if (h >= 2 * R) {
            showError(
              "Segment height must satisfy 0 < h < 2R for a valid circular segment."
            );
            return;
          }
          const ratio = (R - h) / R;
          if (ratio < -1 || ratio > 1) {
            showError(
              "The combination of R and h is geometrically inconsistent. Check your values."
            );
            return;
          }
          theta = 2 * Math.acos(ratio); // radians
          c = 2 * Math.sqrt(2 * R * h - h * h); // chord length
        } else if (mode === "radius-angle") {
          if (!angleInput || !angleUnit) return;
          let angVal = parseFloat(angleInput.value);
          if (!isFinite(angVal)) {
            showError("Please enter a valid central angle.");
            return;
          }
          if (angleUnit.value === "deg") {
            if (angVal <= 0 || angVal >= 360) {
              showError(
                "For a proper segment, the angle in degrees must satisfy 0 < θ < 360."
              );
              return;
            }
            theta = (angVal * Math.PI) / 180;
          } else {
            if (angVal <= 0 || angVal >= 2 * Math.PI) {
              showError(
                "For a proper segment, the angle in radians must satisfy 0 < θ < 2π."
              );
              return;
            }
            theta = angVal;
          }
          c = 2 * R * Math.sin(theta / 2);
          h = R * (1 - Math.cos(theta / 2));
        } else if (mode === "radius-chord") {
          if (!chordInput) return;
          c = parseFloat(chordInput.value);
          if (!isFinite(c) || c <= 0) {
            showError("Please enter a valid positive chord length c.");
            return;
          }
          if (c >= 2 * R) {
            showError(
              "Chord length must satisfy 0 < c < 2R for a valid circular segment."
            );
            return;
          }
          theta = 2 * Math.asin(c / (2 * R));
          h = R - Math.sqrt(R * R - (c / 2) * (c / 2));
        } else {
          showError("Unknown mode. Please reload the page.");
          return;
        }

        // Compute quantities
        const Aseg = 0.5 * R * R * (theta - Math.sin(theta));
        const Asec = 0.5 * R * R * theta;
        const Acirc = Math.PI * R * R;
        const arcLen = R * theta;
        const perimeterSegment = c + arcLen;
        const thetaDeg = (theta * 180) / Math.PI;
        const fractionCircle = (Aseg / Acirc) * 100;

        let html = '<div class="space-y-2">';
        html +=
          '<p class="font-semibold">Results (using consistent length units):</p>';
        html += '<ul class="list-disc ml-5">';
        html +=
          '<li>Segment area A<sub>seg</sub> ≈ <span class="font-mono">' +
          formatNumber(Aseg) +
          "</span> (square units)</li>";
        html +=
          '<li>Sector area A<sub>sec</sub> ≈ <span class="font-mono">' +
          formatNumber(Asec) +
          "</span> (square units)</li>";
        html +=
          '<li>Full circle area πR² ≈ <span class="font-mono">' +
          formatNumber(Acirc) +
          "</span> (square units)</li>";
        html +=
          '<li>Segment height h ≈ <span class="font-mono">' +
          formatNumber(h) +
          "</span></li>";
        html +=
          '<li>Chord length c ≈ <span class="font-mono">' +
          formatNumber(c) +
          "</span></li>";
        html +=
          '<li>Arc length L<sub>arc</sub> ≈ <span class="font-mono">' +
          formatNumber(arcLen) +
          "</span></li>";
        html +=
          '<li>Central angle θ ≈ <span class="font-mono">' +
          formatNumber(theta) +
          '</span> rad ≈ <span class="font-mono">' +
          formatNumber(thetaDeg) +
          "</span>°</li>";
        html +=
          '<li>Segment perimeter (chord + arc) ≈ <span class="font-mono">' +
          formatNumber(perimeterSegment) +
          "</span></li>";
        html +=
          '<li>Segment as fraction of full circle ≈ <span class="font-mono">' +
          formatNumber(fractionCircle) +
          "</span>%</li>";
        html += "</ul>";

        html += '<p class="mt-2 text-xs text-gray-600">';
        html +=
          "Note: If R is in meters, all lengths are in meters and all areas in square meters. Replace meters with any other length unit as needed.";
        html += "</p>";
        html += "</div>";

        resultEl.innerHTML = html;
      }

      if (calcBtn) {
        calcBtn.addEventListener("click", calculateSegment);
      }

      if (clearBtn && resultEl) {
        clearBtn.addEventListener("click", () => {
          if (radiusInput) radiusInput.value = "";
          if (heightInput) heightInput.value = "";
          if (angleInput) angleInput.value = "";
          if (chordInput) chordInput.value = "";
          if (angleUnit) angleUnit.value = "deg";
          if (modeSelect) {
            modeSelect.value = "radius-height";
            updateModeFields();
          }
          resultEl.innerHTML =
            '<p class="text-gray-500">Enter the known values and click <span class="font-semibold">Calculate</span> to see segment area, chord and arc length, sector area, and more.</p>';
        });
      }

      // Simple FAQ toggle
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            if (!answer) return;
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden", !isHidden);
            const icon = btn.querySelector("span:last-child");
            if (icon) icon.textContent = isHidden ? "−" : "+";
          });
        });
    </script>

