    <script>
      // Tab switching
      const modeButtons = document.querySelectorAll("[data-mode]");
      const modes = {
        ending: document.getElementById("mode-ending"),
        average: document.getElementById("mode-average"),
        operational: document.getElementById("mode-operational"),
      };

      modeButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const mode = btn.getAttribute("data-mode");
          // Toggle button styles
          modeButtons.forEach((b) => b.classList.remove("toggle-btn-active"));
          btn.classList.add("toggle-btn-active");
          // Toggle sections
          Object.keys(modes).forEach((key) => {
            modes[key].classList.toggle("hidden", key !== mode);
          });
        });
      });

      function formatNumber(value, decimals = 2) {
        if (!isFinite(value)) return "–";
        return Number(value).toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      document.getElementById("calculateBtn").addEventListener("click", () => {
        const periodDays = parseFloat(
          document.getElementById("periodDays").value
        );
        const activeMode = Array.from(modeButtons)
          .find((b) => b.classList.contains("toggle-btn-active"))
          .getAttribute("data-mode");
        const errorMsg = document.getElementById("errorMsg");
        errorMsg.classList.add("hidden");

        if (!periodDays || periodDays <= 0) {
          errorMsg.textContent =
            "Please enter a valid number of days in the period.";
          errorMsg.classList.remove("hidden");
          return;
        }

        let doh = null;
        let turns = null;
        let label = "";
        let turnsLabel = "";

        if (activeMode === "ending") {
          const endingInventory = parseFloat(
            document.getElementById("endingInventory").value
          );
          const cogs = parseFloat(document.getElementById("cogsEnding").value);
          if (!endingInventory || !cogs || endingInventory < 0 || cogs <= 0) {
            errorMsg.textContent =
              "Please enter positive values for ending inventory and COGS.";
            errorMsg.classList.remove("hidden");
            return;
          }
          const avgDailyCogs = cogs / periodDays;
          doh = endingInventory / avgDailyCogs;
          turns = cogs / endingInventory;
          label = "Based on ending inventory and average daily COGS.";
          turnsLabel = "COGS ÷ ending inventory.";
        } else if (activeMode === "average") {
          const beginInv = parseFloat(
            document.getElementById("beginInventory").value
          );
          const endInv = parseFloat(
            document.getElementById("endInventoryAvg").value
          );
          const cogs = parseFloat(document.getElementById("cogsAverage").value);
          if (
            !beginInv ||
            !endInv ||
            !cogs ||
            beginInv < 0 ||
            endInv < 0 ||
            cogs <= 0
          ) {
            errorMsg.textContent =
              "Please enter positive values for beginning inventory, ending inventory, and COGS.";
            errorMsg.classList.remove("hidden");
            return;
          }
          const avgInv = (beginInv + endInv) / 2;
          doh = (avgInv / cogs) * periodDays;
          turns = cogs / avgInv;
          label = "Based on average inventory and COGS.";
          turnsLabel = "COGS ÷ average inventory.";
        } else if (activeMode === "operational") {
          const onHand = parseFloat(
            document.getElementById("onHandUnits").value
          );
          const dailyUsage = parseFloat(
            document.getElementById("dailyUsage").value
          );
          if (!onHand || !dailyUsage || onHand < 0 || dailyUsage <= 0) {
            errorMsg.textContent =
              "Please enter positive values for on-hand units and daily usage.";
            errorMsg.classList.remove("hidden");
            return;
          }
          doh = onHand / dailyUsage;
          // Approximate turns over the chosen period
          turns = (dailyUsage * periodDays) / onHand;
          label = "Based on on-hand units and average daily usage.";
          turnsLabel = "Estimated turns over the selected period.";
        }

        // Display results
        const resultsSection = document.getElementById("resultsSection");
        document.getElementById("resultDoh").textContent = isFinite(doh)
          ? formatNumber(doh, 1) + " days"
          : "–";
        document.getElementById("resultDohLabel").textContent = label;
        document.getElementById("resultTurns").textContent = isFinite(turns)
          ? formatNumber(turns, 2) + "x"
          : "–";
        document.getElementById("resultTurnsLabel").textContent = turnsLabel;
        resultsSection.classList.remove("hidden");

        // Scenario analysis
        const scenarioPct = parseFloat(
          document.getElementById("scenarioChangePct").value
        );
        const scenarioType = document.getElementById("scenarioType").value;
        const scenarioSection = document.getElementById("scenarioSection");

        if (isFinite(doh) && scenarioPct && scenarioPct !== 0) {
          const factor = 1 + scenarioPct / 100;
          let newDoh = doh;

          if (scenarioType === "inventory") {
            // DOH proportional to inventory level
            newDoh = doh * factor;
          } else if (scenarioType === "demand") {
            // DOH inversely proportional to demand/COGS
            newDoh = doh / factor;
          }

          const delta = newDoh - doh;
          document.getElementById("scenarioBaseDoh").textContent =
            formatNumber(doh, 1) + " days";
          document.getElementById("scenarioNewDoh").textContent =
            formatNumber(newDoh, 1) + " days";
          document.getElementById("scenarioDelta").textContent =
            (delta >= 0 ? "+" : "") + formatNumber(delta, 1) + " days";

          scenarioSection.classList.remove("hidden");
        } else {
          scenarioSection.classList.add("hidden");
        }
      });

      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("doh-form").reset();
        document.getElementById("periodDays").value = 365;
        document.getElementById("resultsSection").classList.add("hidden");
        document.getElementById("scenarioSection").classList.add("hidden");
        document.getElementById("errorMsg").classList.add("hidden");
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
          const menu = document.getElementById("mobile-menu");
          const expanded = menu.classList.contains("hidden") ? "true" : "false";
          menu.classList.toggle("hidden");
          document
            .getElementById("mobile-menu-toggle")
            .setAttribute("aria-expanded", expanded);
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
