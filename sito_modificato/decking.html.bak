          boardLengthUnit.textContent = "ft";
          boardGapUnit.textContent = "in";
          joistSpacingUnit.textContent = "in";
          beamSpacingUnit.textContent = "ft";
          joistOverhangUnit.textContent = "ft";
          postHeightUnit.textContent = "ft";
          footingDiameterUnit.textContent = "in";
          footingDepthUnit.textContent = "ft";
          concreteCostUnit.textContent = "per cubic yard";
          customAreaUnit.textContent = "ft²";
        } else {
          imperialDims.classList.add("hidden");
          metricDims.classList.remove("hidden");
          boardWidthUnit.textContent = "mm";
          boardThicknessUnit.textContent = "mm";
          boardLengthUnit.textContent = "m";
          boardGapUnit.textContent = "mm";
          joistSpacingUnit.textContent = "mm";
          beamSpacingUnit.textContent = "m";
          joistOverhangUnit.textContent = "m";
          postHeightUnit.textContent = "m";
          footingDiameterUnit.textContent = "mm";
          footingDepthUnit.textContent = "m";
          concreteCostUnit.textContent = "per cubic meter";
          customAreaUnit.textContent = "m²";
        }
      }

      function updateBoardProfile() {
        const profile = document.getElementById("board-profile").value;
        const customWrapper = document.getElementById(
          "custom-board-width-wrapper"
        );
        const boardWidthInput = document.getElementById("board-width");

        if (profile === "custom") {
          customWrapper.classList.remove("hidden");
        } else {
          customWrapper.classList.add("hidden");
          boardWidthInput.value = profile;
        }
      }

      function updateDeckShape() {
        const shape = document.getElementById("deck-shape").value;
        const customAreaWrapper = document.getElementById(
          "custom-area-wrapper"
        );
        if (shape === "custom-area") {
          customAreaWrapper.classList.remove("hidden");
        } else {
          customAreaWrapper.classList.add("hidden");
        }
      }

      function calculateDecking() {
        const system = document.getElementById("unit-system").value;
        const shape = document.getElementById("deck-shape").value;

        let length_m, width_m, area_m2, perimeter_m;

        if (shape === "rectangle") {
          if (system === "imperial") {
            const Lft =
              parseFloat(document.getElementById("deck-length-ft").value) || 0;
            const Lin =
              parseFloat(document.getElementById("deck-length-in").value) || 0;
            const Wft =
              parseFloat(document.getElementById("deck-width-ft").value) || 0;
            const Win =
              parseFloat(document.getElementById("deck-width-in").value) || 0;
            const length_ft = Lft + Lin / 12;
            const width_ft = Wft + Win / 12;
            length_m = length_ft * 0.3048;
            width_m = width_ft * 0.3048;
          } else {
            length_m =
              parseFloat(document.getElementById("deck-length-m").value) || 0;
            width_m =
              parseFloat(document.getElementById("deck-width-m").value) || 0;
          }
          area_m2 = length_m * width_m;
          perimeter_m = 2 * (length_m + width_m);
        } else {
          const customArea =
            parseFloat(document.getElementById("custom-area").value) || 0;
          if (system === "imperial") {
            area_m2 = customArea * 0.092903; // ft² to m²
          } else {
            area_m2 = customArea;
          }
          // Approximate square for perimeter
          const side_m = Math.sqrt(area_m2);
          length_m = side_m;
          width_m = side_m;
          perimeter_m = 4 * side_m;
        }

        if (area_m2 <= 0) {
          alert("Please enter a valid deck size or area.");
          return;
        }

        // Board properties
        const boardWidthInput =
          parseFloat(document.getElementById("board-width").value) || 0;
        const boardThicknessInput =
          parseFloat(document.getElementById("board-thickness").value) || 0;
        const boardLengthInput =
          parseFloat(document.getElementById("board-length").value) || 0;
        const boardGapInput =
          parseFloat(document.getElementById("board-gap").value) || 0;
        const wasteFactor = Math.max(
          0,
          parseFloat(document.getElementById("waste-factor").value) || 0
        );

        let boardWidth_m, boardThickness_m, boardLength_m, boardGap_m;

        if (system === "imperial") {
          boardWidth_m = boardWidthInput * 0.0254; // in to m
          boardThickness_m = boardThicknessInput * 0.0254;
          boardLength_m = boardLengthInput * 0.3048; // ft to m
          boardGap_m = boardGapInput * 0.0254;
        } else {
          boardWidth_m = boardWidthInput / 1000; // mm to m
          boardThickness_m = boardThicknessInput / 1000;
          boardLength_m = boardLengthInput; // m
          boardGap_m = boardGapInput / 1000;
        }

        const effectiveWidth_m = boardWidth_m + boardGap_m;
        const coveragePerBoard_m2 = effectiveWidth_m * boardLength_m;

        let boardsBase = area_m2 / coveragePerBoard_m2;
        boardsBase = isFinite(boardsBase) ? boardsBase : 0;
        let boardsTotal = boardsBase * (1 + wasteFactor / 100);
        boardsTotal = Math.ceil(boardsTotal);

        const totalBoardLength_m = boardsTotal * boardLength_m;

        // Joists
        const joistDirection = document.getElementById("joist-direction").value;
        const joistSpacingInput =
          parseFloat(document.getElementById("joist-spacing").value) || 0;
        const beamSpacingInput =
          parseFloat(document.getElementById("beam-spacing").value) || 0;
        const joistOverhangInput =
          parseFloat(document.getElementById("joist-overhang").value) || 0;

        let joistSpacing_m, beamSpacing_m, joistOverhang_m;

        if (system === "imperial") {
          joistSpacing_m = joistSpacingInput * 0.0254;
          beamSpacing_m = beamSpacingInput * 0.3048;
          joistOverhang_m = joistOverhangInput * 0.3048;
        } else {
          joistSpacing_m = joistSpacingInput / 1000;
          beamSpacing_m = beamSpacingInput;
          joistOverhang_m = joistOverhangInput;
        }

        let deckSpanAcrossJoists_m =
          joistDirection === "perpendicular" ? width_m : length_m;
        let deckSpanAlongJoists_m =
          joistDirection === "perpendicular" ? length_m : width_m;

        const joistSpaces = deckSpanAcrossJoists_m / joistSpacing_m;
        let numJoists = Math.floor(joistSpaces) + 1;
        if (!isFinite(numJoists) || numJoists < 1) numJoists = 0;

        const joistSpan_m = beamSpacing_m + 2 * joistOverhang_m;
        const totalJoistLength_m = numJoists * joistSpan_m;

        // Posts and concrete
        const postSpacingXInput =
          parseFloat(document.getElementById("post-spacing-x").value) || 0;
        const postSpacingYInput =
          parseFloat(document.getElementById("post-spacing-y").value) || 0;
        const postHeightInput =
          parseFloat(document.getElementById("post-height").value) || 0;
        const footingDiameterInput =
          parseFloat(document.getElementById("footing-diameter").value) || 0;
        const footingDepthInput =
          parseFloat(document.getElementById("footing-depth").value) || 0;

        let postSpacingX_m,
          postSpacingY_m,
          postHeight_m,
          footingDiameter_m,
          footingDepth_m;

        if (system === "imperial") {
          postSpacingX_m = postSpacingXInput * 0.3048;
          postSpacingY_m = postSpacingYInput * 0.3048;
          postHeight_m = postHeightInput * 0.3048;
          footingDiameter_m = footingDiameterInput * 0.0254;
          footingDepth_m = footingDepthInput * 0.3048;
        } else {
          postSpacingX_m = postSpacingXInput;
          postSpacingY_m = postSpacingYInput;
          postHeight_m = postHeightInput;
          footingDiameter_m = footingDiameterInput / 1000;
          footingDepth_m = footingDepthInput;
        }

        let postsAlongLength = Math.floor(length_m / postSpacingX_m) + 1;
        let postsAlongWidth = Math.floor(width_m / postSpacingY_m) + 1;
        if (!isFinite(postsAlongLength) || postsAlongLength < 1)
          postsAlongLength = 0;
        if (!isFinite(postsAlongWidth) || postsAlongWidth < 1)
          postsAlongWidth = 0;
        const numPosts = postsAlongLength * postsAlongWidth;

        const footingRadius_m = footingDiameter_m / 2;
        const footingVolume_m3 =
          Math.PI * footingRadius_m * footingRadius_m * footingDepth_m;
        const totalConcrete_m3 = numPosts * footingVolume_m3;

        // Fasteners
        const fastenersPerBoard =
          parseFloat(document.getElementById("fasteners-per-board").value) || 0;
        const totalFasteners = boardsTotal * fastenersPerBoard;

        // Costs
        const costPerBoard =
          parseFloat(document.getElementById("cost-per-board").value) || 0;
        const costPerJoist =
          parseFloat(document.getElementById("cost-per-joist").value) || 0;
        const costPerPost =
          parseFloat(document.getElementById("cost-per-post").value) || 0;
        const costPerConcrete =
          parseFloat(document.getElementById("cost-per-concrete").value) || 0;
        const costPerFastener =
          parseFloat(document.getElementById("cost-per-fastener").value) || 0;

        const totalBoardCost = boardsTotal * costPerBoard;
        const totalJoistCost =
          (system === "imperial"
            ? totalJoistLength_m / 0.3048
            : totalJoistLength_m) * costPerJoist;
        const totalPostCost = numPosts * costPerPost;
        const concreteVolumeUnit =
          system === "imperial"
            ? totalConcrete_m3 / 0.764555 // m³ to yd³
            : totalConcrete_m3;
        const totalConcreteCost = concreteVolumeUnit * costPerConcrete;
        const totalFastenerCost = totalFasteners * costPerFastener;
        const totalCost =
          totalBoardCost +
          totalJoistCost +
          totalPostCost +
          totalConcreteCost +
          totalFastenerCost;

        // Display results
        const areaDisplay =
          system === "imperial"
            ? `${roundTo(area_m2 / 0.092903, 1)} ft²`
            : `${roundTo(area_m2, 2)} m²`;
        const perimeterDisplay =
          system === "imperial"
            ? `${roundTo(perimeter_m / 0.3048, 1)} ft`
            : `${roundTo(perimeter_m, 2)} m`;
        const coverageDisplay =
          system === "imperial"
            ? `${roundTo(coveragePerBoard_m2 / 0.092903, 2)} ft²/board`
            : `${roundTo(coveragePerBoard_m2, 3)} m²/board`;
        const boardLengthDisplay =
          system === "imperial"
            ? `${roundTo(totalBoardLength_m / 0.3048, 1)} ft`
            : `${roundTo(totalBoardLength_m, 2)} m`;
        const joistLengthDisplay =
          system === "imperial"
            ? `${roundTo(totalJoistLength_m / 0.3048, 1)} ft`
            : `${roundTo(totalJoistLength_m, 2)} m`;
        const concreteDisplay =
          system === "imperial"
            ? `${roundTo(totalConcrete_m3 / 0.764555, 2)} yd³`
            : `${roundTo(totalConcrete_m3, 3)} m³`;

        document.getElementById("result-area").textContent = areaDisplay;
        document.getElementById("result-perimeter").textContent =
          perimeterDisplay;
        document.getElementById("result-coverage-per-board").textContent =
          coverageDisplay;
        document.getElementById("result-waste").textContent = `${wasteFactor}%`;

        document.getElementById("result-boards-base").textContent = isFinite(
          boardsBase
        )
          ? roundTo(boardsBase, 1)
          : "–";
        document.getElementById("result-boards-total").textContent = isFinite(
          boardsTotal
        )
          ? boardsTotal
          : "–";
        document.getElementById("result-board-length").textContent =
          boardLengthDisplay;
        document.getElementById("result-fasteners").textContent = isFinite(
          totalFasteners
        )
          ? Math.ceil(totalFasteners)
          : "–";

        document.getElementById("result-joists").textContent = numJoists || "–";
        document.getElementById("result-joist-length").textContent =
          joistLengthDisplay;
        document.getElementById("result-posts").textContent = numPosts || "–";
        document.getElementById("result-concrete").textContent =
          concreteDisplay;

        const fmtCurrency = (v) =>
          v > 0 ? `$${roundTo(v, 2).toLocaleString()}` : "–";

        document.getElementById("result-cost-boards").textContent =
          fmtCurrency(totalBoardCost);
        document.getElementById("result-cost-joists").textContent =
          fmtCurrency(totalJoistCost);
        document.getElementById("result-cost-posts").textContent =
          fmtCurrency(totalPostCost);
        document.getElementById("result-cost-concrete").textContent =
          fmtCurrency(totalConcreteCost);
        document.getElementById("result-cost-fasteners").textContent =
          fmtCurrency(totalFastenerCost);
        document.getElementById("result-cost-total").textContent =
          totalCost > 0 ? fmtCurrency(totalCost) : "–";
      }

      function resetDecking() {
        document.getElementById("unit-system").value = "imperial";
        document.getElementById("deck-length-ft").value = 16;
        document.getElementById("deck-length-in").value = 0;
        document.getElementById("deck-width-ft").value = 12;
        document.getElementById("deck-width-in").value = 0;
        document.getElementById("deck-length-m").value = 4.8;
        document.getElementById("deck-width-m").value = 3.6;
        document.getElementById("deck-shape").value = "rectangle";
        document.getElementById("custom-area").value = "";

        document.getElementById("board-profile").value = "5.5";
        document.getElementById("board-width").value = 5.5;
        document.getElementById("board-thickness").value = 1;
        document.getElementById("board-length").value = 12;
        document.getElementById("board-gap").value = 0.125;
        document.getElementById("waste-factor").value = 10;

        document.getElementById("joist-direction").value = "perpendicular";
        document.getElementById("joist-spacing").value = 16;
        document.getElementById("beam-spacing").value = 8;
        document.getElementById("joist-overhang").value = 0.5;

        document.getElementById("post-spacing-x").value = 8;
        document.getElementById("post-spacing-y").value = 8;
        document.getElementById("post-height").value = 4;
        document.getElementById("footing-diameter").value = 12;
        document.getElementById("footing-depth").value = 2.5;

        document.getElementById("cost-per-board").value = "";
        document.getElementById("cost-per-joist").value = "";
        document.getElementById("cost-per-post").value = "";
        document.getElementById("cost-per-concrete").value = "";
        document.getElementById("fasteners-per-board").value = 12;
        document.getElementById("cost-per-fastener").value = "";

        updateUnitVisibility();
        updateBoardProfile();
        updateDeckShape();

        // Clear results
        const fields = [
          "result-area",
          "result-perimeter",
          "result-coverage-per-board",
          "result-waste",
          "result-boards-base",
          "result-boards-total",
          "result-board-length",
          "result-fasteners",
          "result-joists",
          "result-joist-length",
          "result-posts",
          "result-concrete",
          "result-cost-boards",
          "result-cost-joists",
          "result-cost-posts",
          "result-cost-concrete",
          "result-cost-fasteners",
          "result-cost-total",
        ];
        fields.forEach((id) => {
          document.getElementById(id).textContent = "–";
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateUnitVisibility();
        updateBoardProfile();
        updateDeckShape();

        document
          .getElementById("unit-system")
          .addEventListener("change", updateUnitVisibility);
        document
          .getElementById("board-profile")
          .addEventListener("change", updateBoardProfile);
        document
          .getElementById("deck-shape")
          .addEventListener("change", updateDeckShape);
        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateDecking);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetDecking);
      });

