        function updateShapeVisibility() {
          const shape = shapeEl.value;
          dimsRect.classList.toggle("hidden", shape !== "rectangle");
          dimsCircle.classList.toggle("hidden", shape !== "circle");
          dimsBorder.classList.toggle("hidden", shape !== "border");
          dimsCustom.classList.toggle("hidden", shape !== "custom");
        }

        shapeEl.addEventListener("change", updateShapeVisibility);

        densitySelect.addEventListener("change", () => {
          if (densitySelect.value === "custom") {
            densityCustom.removeAttribute("readonly");
          } else {
            densityCustom.setAttribute("readonly", "readonly");
            densityCustom.value = densitySelect.value;
            densityUnit.value = "ton_per_yd3";
          }
        });

        function toFeet(value, unit) {
          const v = parseFloat(value);
          if (isNaN(v)) return NaN;
          switch (unit) {
            case "ft":
              return v;
            case "in":
              return v / 12;
            case "yd":
              return v * 3;
            case "m":
              return v * 3.280839895;
            case "cm":
              return v * 0.03280839895;
            default:
              return NaN;
          }
        }

        function toMeters(value, unit) {
          const v = parseFloat(value);
          if (isNaN(v)) return NaN;
          switch (unit) {
            case "m":
              return v;
            case "cm":
              return v / 100;
            case "ft":
              return v * 0.3048;
            case "in":
              return v * 0.0254;
            case "yd":
              return v * 0.9144;
            default:
              return NaN;
          }
        }

        function getVolume() {
          const shape = shapeEl.value;

          if (shape === "rectangle") {
            const L = document.getElementById("rect-length").value;
            const Lunit = document.getElementById("rect-length-unit").value;
            const W = document.getElementById("rect-width").value;
            const Wunit = document.getElementById("rect-width-unit").value;
            const D = document.getElementById("rect-depth").value;
            const Dunit = document.getElementById("rect-depth-unit").value;

            if (!L || !W || !D)
              return { error: "Please enter length, width, and depth." };

            const Lm = toMeters(L, Lunit);
            const Wm = toMeters(W, Wunit);
            const Dm = toMeters(D, Dunit);
            if ([Lm, Wm, Dm].some(isNaN) || Lm <= 0 || Wm <= 0 || Dm <= 0) {
              return { error: "Dimensions must be positive numbers." };
            }
            const V_m3 = Lm * Wm * Dm;
            return { V_m3 };
          }

          if (shape === "circle") {
            const d = document.getElementById("circle-diameter").value;
            const dUnit = document.getElementById("circle-diameter-unit").value;
            const D = document.getElementById("circle-depth").value;
            const Dunit = document.getElementById("circle-depth-unit").value;

            if (!d || !D) return { error: "Please enter diameter and depth." };

            const dm = toMeters(d, dUnit);
            const Dm = toMeters(D, Dunit);
            if ([dm, Dm].some(isNaN) || dm <= 0 || Dm <= 0) {
              return { error: "Dimensions must be positive numbers." };
            }
            const radius = dm / 2;
            const area = Math.PI * radius * radius;
            const V_m3 = area * Dm;
            return { V_m3 };
          }

          if (shape === "border") {
            const L = document.getElementById("border-length").value;
            const Lunit = document.getElementById("border-length-unit").value;
            const W = document.getElementById("border-width").value;
            const Wunit = document.getElementById("border-width-unit").value;
            const D = document.getElementById("border-depth").value;
            const Dunit = document.getElementById("border-depth-unit").value;
            const n = document.getElementById("border-count").value || "1";

            if (!L || !W || !D)
              return { error: "Please enter length, width, and depth." };

            const Lm = toMeters(L, Lunit);
            const Wm = toMeters(W, Wunit);
            const Dm = toMeters(D, Dunit);
            const count = parseFloat(n);
            if (
              [Lm, Wm, Dm, count].some(isNaN) ||
              Lm <= 0 ||
              Wm <= 0 ||
              Dm <= 0 ||
              count <= 0
            ) {
              return {
                error: "Dimensions and number of runs must be positive.",
              };
            }
            const V_m3 = Lm * Wm * Dm * count;
            return { V_m3 };
          }

          if (shape === "custom") {
            const V = document.getElementById("custom-volume").value;
            const Vunit = document.getElementById("custom-volume-unit").value;
            if (!V) return { error: "Please enter total volume." };
            const v = parseFloat(V);
            if (isNaN(v) || v <= 0)
              return { error: "Volume must be a positive number." };
            let V_m3;
            switch (Vunit) {
              case "m3":
                V_m3 = v;
                break;
              case "yd3":
                V_m3 = v * 0.76455485798;
                break;
              case "ft3":
                V_m3 = v * 0.02831684659;
                break;
              default:
                V_m3 = NaN;
            }
            if (isNaN(V_m3)) return { error: "Invalid volume unit." };
            return { V_m3 };
          }

          return { error: "Unknown shape." };
        }

        function getDensity() {
          let rho = parseFloat(densityCustom.value);
          if (isNaN(rho) || rho <= 0)
            return { error: "Density must be a positive number." };
          const unit = densityUnit.value;
          if (unit === "ton_per_yd3") {
            // convert tons/yd3 to kg/m3
            // 1 short ton = 907.18474 kg, 1 yd3 = 0.76455485798 m3
            const kgPerM3 = (rho * 907.18474) / 0.76455485798;
            return { rho_kg_m3: kgPerM3 };
          } else if (unit === "kg_per_m3") {
            return { rho_kg_m3: rho };
          } else {
            return { error: "Unknown density unit." };
          }
        }

        function getWasteFactor() {
          const w = parseFloat(
            document.getElementById("waste-percent").value || "0"
          );
          if (isNaN(w) || w < 0) return 0;
          return w / 100;
        }

        function getBagWeightKg(valueId, unitId) {
          const v = parseFloat(document.getElementById(valueId).value || "0");
          if (isNaN(v) || v <= 0) return 0;
          const unit = document.getElementById(unitId).value;
          if (unit === "lb") {
            return v * 0.45359237;
          } else {
            return v;
          }
        }

        function formatNumber(n, decimals) {
          if (!isFinite(n)) return "-";
          return n.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
            minimumFractionDigits: 0,
          });
        }

        btnCalc.addEventListener("click", function () {
          errorMsg.textContent = "";
          results.classList.add("hidden");

          const { V_m3, error: volError } = getVolume();
          if (volError) {
            errorMsg.textContent = volError;
            return;
          }

          const { rho_kg_m3, error: densError } = getDensity();
          if (densError) {
            errorMsg.textContent = densError;
            return;
          }

          const wasteFactor = getWasteFactor();

          const V_m3_net = V_m3;
          const V_m3_waste = V_m3_net * (1 + wasteFactor);

          const V_yd3_net = V_m3_net * 1.30795062;
          const V_yd3_waste = V_m3_waste * 1.30795062;
          const V_ft3_net = V_m3_net * 35.3146667;
          const V_ft3_waste = V_m3_waste * 35.3146667;

          const weight_kg_net = V_m3_net * rho_kg_m3;
          const weight_kg_waste = V_m3_waste * rho_kg_m3;
          const weight_ton_net = weight_kg_net / 907.18474;
          const weight_ton_waste = weight_kg_waste / 907.18474;
          const weight_tonne_net = weight_kg_net / 1000;
          const weight_tonne_waste = weight_kg_waste / 1000;

          // Bags
          const bagSmallKg = getBagWeightKg("bag-small", "bag-small-unit");
          const bagMediumKg = getBagWeightKg("bag-medium", "bag-medium-unit");
          const bagLargeKg = getBagWeightKg("bag-large", "bag-large-unit");

          const bagsSmall =
            bagSmallKg > 0 ? Math.ceil(weight_kg_waste / bagSmallKg) : 0;
          const bagsMedium =
            bagMediumKg > 0 ? Math.ceil(weight_kg_waste / bagMediumKg) : 0;
          const bagsLarge =
            bagLargeKg > 0 ? Math.ceil(weight_kg_waste / bagLargeKg) : 0;

          // Populate results
          resVolNoWaste.textContent =
            formatNumber(V_yd3_net, 2) +
            " yd³  |  " +
            formatNumber(V_m3_net, 3) +
            " m³  |  " +
            formatNumber(V_ft3_net, 1) +
            " ft³";

          resVolWaste.textContent =
            formatNumber(V_yd3_waste, 2) +
            " yd³  |  " +
            formatNumber(V_m3_waste, 3) +
            " m³  |  " +
            formatNumber(V_ft3_waste, 1) +
            " ft³";

          resWeightNoWaste.textContent =
            formatNumber(weight_ton_net, 2) +
            " short tons  |  " +
            formatNumber(weight_tonne_net, 2) +
            " tonnes  |  " +
            formatNumber(weight_kg_net, 0) +
            " kg";

          resWeightWaste.textContent =
            formatNumber(weight_ton_waste, 2) +
            " short tons  |  " +
            formatNumber(weight_tonne_waste, 2) +
            " tonnes  |  " +
            formatNumber(weight_kg_waste, 0) +
            " kg";

          resBagsSmall.textContent = bagsSmall > 0 ? bagsSmall + " bags" : "—";
          resBagsMedium.textContent =
            bagsMedium > 0 ? bagsMedium + " bags" : "—";
          resBagsLarge.textContent = bagsLarge > 0 ? bagsLarge + " bags" : "—";

          results.classList.remove("hidden");
        });

        btnReset.addEventListener("click", function () {
          document
            .querySelectorAll('input[type="number"]')
            .forEach((el) => (el.value = ""));
          document.getElementById("border-count").value = "1";
          document.getElementById("waste-percent").value = "5";
          densitySelect.value = "1.5";
          densityCustom.value = "1.5";
          densityCustom.setAttribute("readonly", "readonly");
          densityUnit.value = "ton_per_yd3";
          document.getElementById("bag-small").value = "50";
          document.getElementById("bag-medium").value = "60";
          document.getElementById("bag-large").value = "80";
          document.getElementById("bag-small-unit").value = "lb";
          document.getElementById("bag-medium-unit").value = "lb";
          document.getElementById("bag-large-unit").value = "lb";
          shapeEl.value = "rectangle";
          updateShapeVisibility();
          setUnitSystem("imperial");
          errorMsg.textContent = "";
          results.classList.add("hidden");
        });

        // Initial setup
        updateShapeVisibility();
        setUnitSystem("imperial");
      })();
    </script>
  
