    <script>
      // Core Illinois tax parameters (simplified, can be updated centrally)
      const IL_TAX_CONFIG = {
        2024: {
          flatRate: 0.0495, // Example flat rate; update as needed
          exemptionPerPerson: 2500, // Example exemption; update as needed
        },
        2023: {
          flatRate: 0.0495,
          exemptionPerPerson: 2500,
        },
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "—";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "—";
        return (value * 100).toFixed(2) + "%";
      }

      function calculateIllinoisTax() {
        const year = document.getElementById("taxYear").value;
        const cfg = IL_TAX_CONFIG[year];

        const income =
          parseFloat(document.getElementById("ilIncome").value) || 0;
        const exemptions = Math.max(
          0,
          parseInt(document.getElementById("exemptions").value, 10) || 0
        );
        const credits = Math.max(
          0,
          parseFloat(document.getElementById("ilCredits").value) || 0
        );
        const includeLocal = document.getElementById("includeLocal").checked;
        const localRate =
          Math.max(
            0,
            parseFloat(document.getElementById("localRate").value) || 0
          ) / 100;
        const localBaseType = document.getElementById("localBase").value;
        const federalTax = Math.max(
          0,
          parseFloat(document.getElementById("federalTax").value) || 0
        );

        const exemptionTotal = exemptions * cfg.exemptionPerPerson;
        const taxableBase = Math.max(0, income - exemptionTotal);
        const stateTaxBeforeCredits = taxableBase * cfg.flatRate;
        const stateTaxAfterCredits = Math.max(
          0,
          stateTaxBeforeCredits - credits
        );

        let localBase = 0;
        if (includeLocal) {
          localBase = localBaseType === "gross" ? income : taxableBase;
        }
        const localTax = includeLocal ? localBase * localRate : 0;
        const totalIlLocal = stateTaxAfterCredits + localTax;

        const effectiveRate = income > 0 ? stateTaxAfterCredits / income : 0;
        const takeHomeAfterIl = income - totalIlLocal;
        const takeHomeAfterFedIl = income - totalIlLocal - federalTax;

        // Update UI
        document.getElementById("stateTaxOut").textContent =
          formatMoney(stateTaxAfterCredits);
        document.getElementById("stateRateOut").textContent = formatPercent(
          cfg.flatRate
        );
        document.getElementById("effectiveRateOut").textContent =
          income > 0 ? formatPercent(effectiveRate) : "—";
        document.getElementById("localTaxOut").textContent = includeLocal
          ? formatMoney(localTax)
          : "$0";
        document.getElementById("totalIlLocalOut").textContent =
          formatMoney(totalIlLocal);
        document.getElementById("takeHomeOut").textContent =
          formatMoney(takeHomeAfterIl);
        document.getElementById("takeHomeAfterFedOut").textContent =
          federalTax > 0
            ? `After federal + Illinois: ${formatMoney(takeHomeAfterFedIl)}`
            : "After federal + Illinois: (enter federal tax to estimate)";

        const filingStatus = document.getElementById("filingStatus").value;
        const statusLabel =
          {
            single: "single filer",
            married_joint: "married filing jointly",
            married_separate: "married filing separately",
            hoh: "head of household",
          }[filingStatus] || "taxpayer";

        const summaryParts = [];
        summaryParts.push(
          `For a ${statusLabel} with Illinois taxable income of ${formatMoney(
            income
          )} in ${year},`
        );
        summaryParts.push(
          `estimated Illinois state income tax after exemptions and credits is ${formatMoney(
            stateTaxAfterCredits
          )}.`
        );
        if (includeLocal && localRate > 0) {
          summaryParts.push(
            `With local income tax included, total Illinois + local tax is ${formatMoney(
              totalIlLocal
            )}.`
          );
        }
        summaryParts.push(
          `Estimated take‑home pay after Illinois tax is ${formatMoney(
            takeHomeAfterIl
          )}.`
        );
        document.getElementById("summaryOut").textContent =
          summaryParts.join(" ");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateIllinoisTax);

      // Basic FAQ toggle (in addition to global script_faq if present)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((icon) => (icon.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              btn.querySelector("span:last-child").textContent = "−";
            }
          });
        });

      // Initial calculation with defaults
      calculateIllinoisTax();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
