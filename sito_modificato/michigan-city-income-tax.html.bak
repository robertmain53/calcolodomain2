<script>
  // Michigan city income tax rates (illustrative; verify with official sources)
  const miCityRates = [
    { city: "Albion", resident: 0.01, nonresident: 0.005 },
    { city: "Battle Creek", resident: 0.01, nonresident: 0.005 },
    { city: "Benton Harbor", resident: 0.01, nonresident: 0.005 },
    { city: "Big Rapids", resident: 0.01, nonresident: 0.005 },
    { city: "Detroit", resident: 0.0238, nonresident: 0.012 },
    { city: "East Lansing", resident: 0.01, nonresident: 0.005 },
    { city: "Flint", resident: 0.01, nonresident: 0.005 },
    { city: "Grand Rapids", resident: 0.015, nonresident: 0.0075 },
    { city: "Grayling", resident: 0.01, nonresident: 0.005 },
    { city: "Hamtramck", resident: 0.01, nonresident: 0.005 },
    { city: "Highland Park", resident: 0.02, nonresident: 0.01 },
    { city: "Hudson", resident: 0.01, nonresident: 0.005 },
    { city: "Ionia", resident: 0.01, nonresident: 0.005 },
    { city: "Jackson", resident: 0.01, nonresident: 0.005 },
    { city: "Lansing", resident: 0.01, nonresident: 0.005 },
    { city: "Lapeer", resident: 0.01, nonresident: 0.005 },
    { city: "Muskegon", resident: 0.01, nonresident: 0.005 },
    { city: "Muskegon Heights", resident: 0.01, nonresident: 0.005 },
    { city: "Pontiac", resident: 0.01, nonresident: 0.005 },
    { city: "Port Huron", resident: 0.01, nonresident: 0.005 },
    { city: "Portland", resident: 0.01, nonresident: 0.005 },
    { city: "Saginaw", resident: 0.015, nonresident: 0.0075 },
    { city: "Springfield", resident: 0.01, nonresident: 0.005 },
    { city: "Walker", resident: 0.01, nonresident: 0.005 },
    { city: "Portage", resident: 0.01, nonresident: 0.005 } // example; confirm if applicable
  ];

  function formatMoney(value) {
    if (!isFinite(value)) return "$0";
    return value.toLocaleString("en-US", { style: "currency", currency: "USD", maximumFractionDigits: 2 });
  }

  function formatPercent(value) {
    if (!isFinite(value)) return "0%";
    return value.toLocaleString("en-US", { style: "percent", minimumFractionDigits: 2, maximumFractionDigits: 2 });
  }

  function initCitySelect() {
    const select = document.getElementById("city-select");
    miCityRates.sort((a, b) => a.city.localeCompare(b.city));
    miCityRates.forEach((c, idx) => {
      const opt = document.createElement("option");
      opt.value = idx;
      opt.textContent = c.city;
      select.appendChild(opt);
    });
    select.selectedIndex = 0;
    updateCityRateInfo();
  }

  function updateCityRateInfo() {
    const select = document.getElementById("city-select");
    const info = document.getElementById("city-rate-info");
    const residency = document.querySelector("input[name='residency']:checked").value;
    const city = miCityRates[select.value];
    if (!city) {
      info.textContent = "";
      return;
    }
    const resRate = city.resident;
    const nonRate = city.nonresident;
    const activeRate = residency === "resident" ? resRate : nonRate;
    info.innerHTML = `
      <span class="rate-badge inline-flex items-center px-2 py-0.5 rounded-full bg-blue-50 text-blue-800 border border-blue-100">
        Active rate (${residency}): ${formatPercent(activeRate)}
      </span>
      <span class="ml-2 text-gray-500">Resident: ${formatPercent(resRate)}, Nonresident: ${formatPercent(nonRate)}</span>
    `;
  }

  function populateCityRateTable() {
    const tbody = document.getElementById("city-rate-table-body");
    tbody.innerHTML = "";
    miCityRates.forEach(city => {
      const tr = document.createElement("tr");
      tr.innerHTML = `
        <td class="px-3 py-2 border-b text-gray-800">${city.city}</td>
        <td class="px-3 py-2 border-b text-right text-gray-800">${formatPercent(city.resident)}</td>
        <td class="px-3 py-2 border-b text-right text-gray-800">${formatPercent(city.nonresident)}</td>
      `;
      tbody.appendChild(tr);
    });
  }

  function calculateTax() {
    const select = document.getElementById("city-select");
    const residency = document.querySelector("input[name='residency']:checked").value;
    const wageInput = parseFloat(document.getElementById("wage-amount").value) || 0;
    const otherWages = parseFloat(document.getElementById("other-city-wages").value) || 0;
    const preTax = parseFloat(document.getElementById("pre-tax-deductions").value) || 0;
    const payFreq = parseInt(document.getElementById("pay-frequency").value, 10) || 26;

    const city = miCityRates[select.value];
    if (!city) return;

    const rate = residency === "resident" ? city.resident : city.nonresident;

    const taxableIncome = Math.max(0, wageInput - preTax);
    const cityTax = taxableIncome * rate;
    const totalIncome = wageInput + otherWages;
    const takeHome = totalIncome - cityTax;
    const effectiveRate = totalIncome > 0 ? cityTax / totalIncome : 0;

    // Update summary cards
    document.getElementById("result-city-tax").textContent = formatMoney(cityTax);
    document.getElementById("result-city-rate").textContent = `${city.city} ${residency} rate: ${formatPercent(rate)}`;
    document.getElementById("result-takehome").textContent = formatMoney(takeHome);
    document.getElementById("result-per-paycheck").textContent = `≈ ${formatMoney(takeHome / payFreq)} per paycheck (${payFreq}/year)`;
    document.getElementById("result-effective-rate").textContent = formatPercent(effectiveRate);
    document.getElementById("result-total-income").textContent = `Total income (this city + other cities): ${formatMoney(totalIncome)}`;

    // Breakdown table
    const tbody = document.getElementById("breakdown-body");
    tbody.innerHTML = `
      <tr>
        <td class="px-3 py-2 text-gray-800">Income in selected city</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(wageInput)}</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(wageInput / payFreq)}</td>
      </tr>
      <tr>
        <td class="px-3 py-2 text-gray-800">Pre‑tax deductions (approx.)</td>
        <td class="px-3 py-2 text-right text-gray-800">−${formatMoney(preTax)}</td>
        <td class="px-3 py-2 text-right text-gray-800">−${formatMoney(preTax / payFreq)}</td>
      </tr>
      <tr>
        <td class="px-3 py-2 text-gray-800">City taxable income</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(taxableIncome)}</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(taxableIncome / payFreq)}</td>
      </tr>
      <tr>
        <td class="px-3 py-2 text-gray-800">City income tax</td>
        <td class="px-3 py-2 text-right text-gray-800">−${formatMoney(cityTax)}</td>
        <td class="px-3 py-2 text-right text-gray-800">−${formatMoney(cityTax / payFreq)}</td>
      </tr>
      <tr>
        <td class="px-3 py-2 text-gray-800">Other‑city income (not taxed here)</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(otherWages)}</td>
        <td class="px-3 py-2 text-right text-gray-800">${formatMoney(otherWages / payFreq)}</td>
      </tr>
      <tr class="bg-gray-50">
        <td class="px-3 py-2 font-semibold text-gray-900">Take‑home after city tax</td>
        <td class="px-3 py-2 text-right font-semibold text-gray-900">${formatMoney(takeHome)}</td>
        <td class="px-3 py-2 text-right font-semibold text-gray-900">${formatMoney(takeHome / payFreq)}</td>
      </tr>
    `;

    document.getElementById("results-section").classList.remove("hidden");
  }

  function resetCalculator() {
    document.getElementById("tax-year").value = "2025";
    document.getElementById("filing-status").value = "single";
    document.getElementById("city-select").selectedIndex = 0;
    document.querySelector("input[name='residency'][value='resident']").checked = true;
    document.getElementById("wage-amount").value = "";
    document.getElementById("other-city-wages").value = "";
    document.getElementById("pre-tax-deductions").value = "";
    document.getElementById("pay-frequency").value = "26";
    document.getElementById("results-section").classList.add("hidden");
    updateCityRateInfo();
  }

  document.addEventListener("DOMContentLoaded", () => {
    initCitySelect();
    populateCityRateTable();
    document.getElementById("city-select").addEventListener("change", updateCityRateInfo);
    document.querySelectorAll("input[name='residency']").forEach(r => r.addEventListener("change", updateCityRateInfo));
    document.getElementById("calculate-btn").addEventListener("click", (e) => {
      e.preventDefault();
      calculateTax();
    });
    document.getElementById("reset-btn").addEventListener("click", (e) => {
      e.preventDefault();
      resetCalculator();
    });
  });

  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
