    <script>
      // Tab handling
      document.querySelectorAll("[data-tab]").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".tab-section")
            .forEach((sec) => sec.classList.add("hidden"));
          document.getElementById("tab-" + target).classList.remove("hidden");
          document
            .querySelectorAll("[data-tab]")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
        });
      });

      function getCommonSettings() {
        const seam =
          parseFloat(document.getElementById("seamAllowance").value) || 0.25;
        const wof =
          parseFloat(document.getElementById("fabricWidth").value) || 42;
        const marginPct = Math.max(
          0,
          parseFloat(document.getElementById("safetyMargin").value) || 0
        );
        const usableWof = Math.max(wof - 2, 10); // allow 1" total trimming
        return { seam, wof, usableWof, marginPct };
      }

      function inchesToYards(inches) {
        return inches / 36;
      }

      function formatYards(yards) {
        if (!isFinite(yards) || yards <= 0) return "0 yd";
        const rounded = Math.ceil(yards * 8) / 8; // round up to nearest 1/8 yd
        return rounded.toFixed(3).replace(/0+$/, "").replace(/\.$/, "") + " yd";
      }

      // Quilt top yardage
      document.getElementById("calcQtYardage").addEventListener("click", () => {
        const { wof, usableWof, marginPct } = getCommonSettings();
        const qw = parseFloat(document.getElementById("qtQuiltWidth").value);
        const qh = parseFloat(document.getElementById("qtQuiltHeight").value);
        const bw = parseFloat(document.getElementById("qtBlockWidth").value);
        const bh = parseFloat(document.getElementById("qtBlockHeight").value);

        const out = document.getElementById("qtYardageResult");
        if ([qw, qh, bw, bh].some((v) => !v || v <= 0)) {
          out.textContent =
            "Please enter positive values for quilt and block sizes.";
          out.classList.remove("hidden");
          return;
        }

        const blocksAcross = Math.ceil(qw / bw);
        const blocksDown = Math.ceil(qh / bh);
        const totalBlocks = blocksAcross * blocksDown;
        const blockArea = bw * bh;
        const totalArea = totalBlocks * blockArea; // in²

        const lengthInches = totalArea / usableWof;
        const lengthWithMargin = lengthInches * (1 + marginPct / 100);
        const yards = inchesToYards(lengthWithMargin);

        out.innerHTML = `
      <p><strong>Estimated quilt top yardage:</strong> ${formatYards(
        yards
      )} of fabric at ~${wof.toFixed(0)}&quot; WOF.</p>
      <ul class="list-disc ml-5 mt-2">
        <li>Blocks across: <strong>${blocksAcross}</strong>, blocks down: <strong>${blocksDown}</strong> (total <strong>${totalBlocks}</strong> blocks).</li>
        <li>Total block area: approx. <strong>${totalArea.toFixed(
          0
        )}</strong> square inches.</li>
        <li>Equivalent fabric length: about <strong>${lengthWithMargin.toFixed(
          1
        )}</strong> inches including safety margin.</li>
      </ul>
      <p class="mt-2 text-gray-600">Tip: Round up to the next 1/4 yard when purchasing fabric, especially for directional prints or fussy cutting.</p>
    `;
        out.classList.remove("hidden");
      });

      // Binding
      document.getElementById("calcBinding").addEventListener("click", () => {
        const { wof, usableWof, marginPct } = getCommonSettings();
        const qw = parseFloat(document.getElementById("bindQuiltWidth").value);
        const qh = parseFloat(document.getElementById("bindQuiltHeight").value);
        const stripWidth = parseFloat(
          document.getElementById("bindStripWidth").value
        );
        const type = document.getElementById("bindType").value;
        const out = document.getElementById("bindingResult");

        if ([qw, qh, stripWidth].some((v) => !v || v <= 0)) {
          out.textContent =
            "Please enter positive values for quilt size and strip width.";
          out.classList.remove("hidden");
          return;
        }

        const perimeter = 2 * (qw + qh);
        let requiredLength = perimeter + 10; // join + corners
        if (type === "bias") {
          requiredLength *= 1.05; // small extra for bias waste
        }
        requiredLength *= 1 + marginPct / 100;

        const strips = Math.ceil(requiredLength / usableWof);
        const totalStripLength = strips * usableWof;
        const yards = inchesToYards(strips * stripWidth);

        out.innerHTML = `
      <p><strong>Binding requirements (${
        type === "bias" ? "bias" : "straight-grain"
      }):</strong></p>
      <ul class="list-disc ml-5 mt-2">
        <li>Perimeter: approx. <strong>${perimeter.toFixed(
          1
        )}</strong> inches.</li>
        <li>Required binding length (with joins &amp; margin): <strong>${requiredLength.toFixed(
          1
        )}</strong> inches.</li>
        <li>Number of ${stripWidth.toFixed(
          2
        )}&quot; strips from WOF: <strong>${strips}</strong>.</li>
        <li>Total binding yardage: <strong>${formatYards(yards)}</strong>.</li>
      </ul>
      <p class="mt-2 text-gray-600">Tip: Cut one extra strip if you are working with directional prints or mitered corners.</p>
    `;
        out.classList.remove("hidden");
      });

      // Borders
      document.getElementById("calcBorders").addEventListener("click", () => {
        const { wof, usableWof, marginPct } = getCommonSettings();
        const cw = parseFloat(
          document.getElementById("borderCenterWidth").value
        );
        const ch = parseFloat(
          document.getElementById("borderCenterHeight").value
        );
        const b1 =
          parseFloat(document.getElementById("border1Width").value) || 0;
        const b2 =
          parseFloat(document.getElementById("border2Width").value) || 0;
        const out = document.getElementById("bordersResult");

        if (!cw || !ch || cw <= 0 || ch <= 0) {
          out.textContent =
            "Please enter positive values for center quilt size.";
          out.classList.remove("hidden");
          return;
        }

        function borderYardage(
          borderWidth,
          index,
          currentWidth,
          currentHeight
        ) {
          if (borderWidth <= 0) return null;
          const innerWidth = currentWidth;
          const innerHeight = currentHeight;
          const outerWidth = innerWidth + 2 * borderWidth;
          const outerHeight = innerHeight + 2 * borderWidth;
          const lengthNeeded = 2 * (outerWidth + outerHeight) + 10;
          const lengthWithMargin = lengthNeeded * (1 + marginPct / 100);
          const strips = Math.ceil(lengthWithMargin / usableWof);
          const yards = inchesToYards(strips * borderWidth);
          return {
            index,
            innerWidth,
            innerHeight,
            outerWidth,
            outerHeight,
            lengthWithMargin,
            strips,
            yards,
          };
        }

        const results = [];
        let curW = cw;
        let curH = ch;
        const b1Res = borderYardage(b1, 1, curW, curH);
        if (b1Res) {
          results.push(b1Res);
          curW = b1Res.outerWidth;
          curH = b1Res.outerHeight;
        }
        const b2Res = borderYardage(b2, 2, curW, curH);
        if (b2Res) {
          results.push(b2Res);
          curW = b2Res.outerWidth;
          curH = b2Res.outerHeight;
        }

        if (!results.length) {
          out.textContent = "Set at least one border width greater than 0.";
          out.classList.remove("hidden");
          return;
        }

        let html = `<p><strong>Border fabric requirements:</strong></p><ul class="list-disc ml-5 mt-2">`;
        results.forEach((r) => {
          html += `
        <li>
          Border ${r.index}: cut <strong>${
            r.strips
          }</strong> strips at <strong>${(r.index === 1 ? b1 : b2).toFixed(
            2
          )}&quot;</strong> from WOF
          (<strong>${formatYards(
            r.yards
          )}</strong> total). Finished quilt after this border: approx.
          <strong>${r.outerWidth.toFixed(1)}&quot; × ${r.outerHeight.toFixed(
            1
          )}&quot;</strong>.
        </li>`;
        });
        html += `</ul><p class="mt-2 text-gray-600">Tip: For pieced borders, calculate the border strip length first, then design your piecing to match that length.</p>`;

        out.innerHTML = html;
        out.classList.remove("hidden");
      });

      // Backing & batting
      document.getElementById("calcBacking").addEventListener("click", () => {
        const { wof, usableWof, marginPct } = getCommonSettings();
        const qw = parseFloat(document.getElementById("backQuiltWidth").value);
        const qh = parseFloat(document.getElementById("backQuiltHeight").value);
        const extra =
          parseFloat(document.getElementById("backExtra").value) || 0;
        const wide = document.getElementById("backWide").value === "yes";
        const out = document.getElementById("backingResult");

        if (!qw || !qh || qw <= 0 || qh <= 0) {
          out.textContent = "Please enter positive values for quilt size.";
          out.classList.remove("hidden");
          return;
        }

        const backW = qw + 2 * extra;
        const backH = qh + 2 * extra;
        const fabricWidth = wide ? 108 : wof;
        const usable = wide ? fabricWidth - 2 : usableWof;

        const panelsAcross = Math.ceil(backW / usable);
        const panelLength = backH * (1 + marginPct / 100);
        const totalYards = inchesToYards(panelsAcross * panelLength);

        out.innerHTML = `
      <p><strong>Backing &amp; batting requirements:</strong></p>
      <ul class="list-disc ml-5 mt-2">
        <li>Backing size (including extra): approx. <strong>${backW.toFixed(
          1
        )}&quot; × ${backH.toFixed(1)}&quot;</strong>.</li>
        <li>Fabric width used: <strong>${fabricWidth.toFixed(
          0
        )}&quot;</strong> (${wide ? "wide backing" : "regular WOF"}).</li>
        <li>Number of panels across: <strong>${panelsAcross}</strong>.</li>
        <li>Cut each panel length: <strong>${panelLength.toFixed(
          1
        )}&quot;</strong>.</li>
        <li>Total backing yardage: <strong>${formatYards(
          totalYards
        )}</strong>.</li>
      </ul>
      <p class="mt-2 text-gray-600">You can use the same dimensions for batting; many quilters add a little extra batting beyond the backing.</p>
    `;
        out.classList.remove("hidden");
      });

      // Layout
      document.getElementById("calcLayout").addEventListener("click", () => {
        const bw = parseFloat(
          document.getElementById("layoutBlockWidth").value
        );
        const bh = parseFloat(
          document.getElementById("layoutBlockHeight").value
        );
        const across = parseInt(
          document.getElementById("layoutBlocksAcross").value,
          10
        );
        const down = parseInt(
          document.getElementById("layoutBlocksDown").value,
          10
        );
        const sashing =
          parseFloat(document.getElementById("layoutSashing").value) || 0;
        const border =
          parseFloat(document.getElementById("layoutBorder").value) || 0;
        const out = document.getElementById("layoutResult");

        if (
          !bw ||
          !bh ||
          !across ||
          !down ||
          bw <= 0 ||
          bh <= 0 ||
          across <= 0 ||
          down <= 0
        ) {
          out.textContent =
            "Please enter positive values for block size and counts.";
          out.classList.remove("hidden");
          return;
        }

        const topWidth = across * bw + (across - 1) * sashing;
        const topHeight = down * bh + (down - 1) * sashing;
        const finalWidth = topWidth + 2 * border;
        const finalHeight = topHeight + 2 * border;
        const totalBlocks = across * down;

        out.innerHTML = `
      <p><strong>Layout summary:</strong></p>
      <ul class="list-disc ml-5 mt-2">
        <li>Total blocks: <strong>${totalBlocks}</strong> (${across} across × ${down} down).</li>
        <li>Quilt center (without borders): approx. <strong>${topWidth.toFixed(
          1
        )}&quot; × ${topHeight.toFixed(1)}&quot;</strong>.</li>
        <li>Finished quilt (with borders): approx. <strong>${finalWidth.toFixed(
          1
        )}&quot; × ${finalHeight.toFixed(1)}&quot;</strong>.</li>
      </ul>
      <p class="mt-2 text-gray-600">Adjust block count, sashing, or border width until you reach your target quilt size.</p>
    `;
        out.classList.remove("hidden");
      });

      // Precuts
      document.getElementById("calcPrecuts").addEventListener("click", () => {
        const qw = parseFloat(document.getElementById("preQuiltWidth").value);
        const qh = parseFloat(document.getElementById("preQuiltHeight").value);
        const type = document.getElementById("preType").value;
        const out = document.getElementById("precutsResult");

        if (!qw || !qh || qw <= 0 || qh <= 0) {
          out.textContent = "Please enter positive values for quilt size.";
          out.classList.remove("hidden");
          return;
        }

        let pieceW, pieceH, perPack;
        if (type === "charm") {
          pieceW = pieceH = 4.5; // finished
          perPack = 42;
        } else if (type === "layer") {
          pieceW = pieceH = 9.5;
          perPack = 42;
        } else {
          // jelly roll: assume strips used as 2.5" finished rows across width
          pieceW = 2.5;
          pieceH = 40; // approximate usable length
          perPack = 40;
        }

        let piecesAcross, piecesDown, totalPieces, packs;
        if (type === "jelly") {
          piecesAcross = Math.ceil(qw / pieceW);
          piecesDown = Math.ceil(qh / pieceH);
          totalPieces = piecesAcross * piecesDown;
          packs = Math.ceil(totalPieces / perPack);
        } else {
          piecesAcross = Math.ceil(qw / pieceW);
          piecesDown = Math.ceil(qh / pieceH);
          totalPieces = piecesAcross * piecesDown;
          packs = Math.ceil(totalPieces / perPack);
        }

        const label =
          type === "charm"
            ? "5&quot; charm squares"
            : type === "layer"
            ? "10&quot; layer cake squares"
            : "2.5&quot; jelly roll strips";

        out.innerHTML = `
      <p><strong>Precut estimate (${label}):</strong></p>
      <ul class="list-disc ml-5 mt-2">
        <li>Pieces across: <strong>${piecesAcross}</strong>, pieces down: <strong>${piecesDown}</strong>.</li>
        <li>Total pieces needed: <strong>${totalPieces}</strong>.</li>
        <li>Assuming ~${perPack} pieces per pack, you need about <strong>${packs}</strong> pack(s).</li>
      </ul>
      <p class="mt-2 text-gray-600">Always round up and consider extra pieces for fussy cutting, mistakes, and matching prints.</p>
    `;
        out.classList.remove("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
