    <script>
      // Utility: format INR with commas
      function formatINR(value) {
        if (!isFinite(value)) return "-";
        return (
          "₹" + value.toLocaleString("en-IN", { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "-";
        return value.toFixed(2) + "%";
      }

      // Core PPF calculation
      function calculatePPF() {
        const mode =
          document.querySelector(".mode-toggle.active")?.dataset.mode ||
          "yearly";
        const amountInput = document.getElementById("ppf-amount");
        const rateInput = document.getElementById("ppf-rate");
        const yearsInput = document.getElementById("ppf-years");
        const timing = document.getElementById("ppf-timing").value;

        let contribution = parseFloat(amountInput.value) || 0;
        let rate = parseFloat(rateInput.value) || 0;
        let years = parseInt(yearsInput.value, 10) || 15;

        if (contribution < 0) contribution = 0;
        if (rate <= 0) rate = 1;
        if (years < 15) years = 15;

        // Enforce annual PPF limit for yearly mode
        if (mode === "yearly" && contribution > 150000) {
          contribution = 150000;
          amountInput.value = contribution.toString();
        }
        // For monthly mode, cap at 1.5L / 12
        if (mode === "monthly") {
          const maxMonthly = 150000 / 12;
          if (contribution > maxMonthly) {
            contribution = Math.floor(maxMonthly);
            amountInput.value = contribution.toString();
          }
        }

        const r = rate / 100;
        const scheduleBody = document.getElementById("ppf-schedule-body");
        scheduleBody.innerHTML = "";

        let balance = 0;
        let totalInvested = 0;
        let totalInterest = 0;

        const periodsPerYear = mode === "monthly" ? 12 : 1;
        const periodRate = r / periodsPerYear;

        for (let year = 1; year <= years; year++) {
          const openingBalance = balance;
          let yearContribution = 0;
          let yearInterest = 0;

          for (let p = 1; p <= periodsPerYear; p++) {
            let deposit = contribution;
            yearContribution += deposit;

            // Approximate timing: adjust effective deposit for interest
            let effectiveDeposit = deposit;
            if (timing === "middle") {
              effectiveDeposit = deposit * (1 - 0.5 * periodRate);
            } else if (timing === "end") {
              effectiveDeposit = deposit * (1 - periodRate);
            }

            balance += effectiveDeposit;
            const interestThisPeriod = balance * periodRate;
            yearInterest += interestThisPeriod;
            balance += interestThisPeriod;
          }

          totalInvested += yearContribution;
          totalInterest += yearInterest;

          const row = document.createElement("tr");
          row.innerHTML = `
        <td class="px-3 py-2 text-left text-gray-700">${year}</td>
        <td class="px-3 py-2 text-right text-gray-700">${formatINR(
          openingBalance
        )}</td>
        <td class="px-3 py-2 text-right text-gray-700">${formatINR(
          yearContribution
        )}</td>
        <td class="px-3 py-2 text-right text-emerald-700">${formatINR(
          yearInterest
        )}</td>
        <td class="px-3 py-2 text-right text-gray-900 font-semibold">${formatINR(
          balance
        )}</td>
      `;
          scheduleBody.appendChild(row);
        }

        // Approximate XIRR: for regular contributions, IRR ~ rate if timing ~ middle
        let approxXirr = r * 100;
        if (timing === "start") approxXirr += 0.1;
        if (timing === "end") approxXirr -= 0.1;

        document.getElementById("ppf-total-invested").textContent =
          formatINR(totalInvested);
        document.getElementById("ppf-total-interest").textContent =
          formatINR(totalInterest);
        document.getElementById("ppf-maturity").textContent =
          formatINR(balance);
        document.getElementById("ppf-xirr").textContent =
          formatPercent(approxXirr);
      }

      // Event bindings
      document.addEventListener("DOMContentLoaded", () => {
        const yearsInput = document.getElementById("ppf-years");
        const yearsOutput = document.getElementById("ppf-years-output");
        const amountLabel = document.getElementById("ppf-amount-label");

        yearsInput.addEventListener("input", () => {
          yearsOutput.textContent = yearsInput.value;
        });

        document.querySelectorAll(".mode-toggle").forEach((btn) => {
          btn.addEventListener("click", () => {
            document.querySelectorAll(".mode-toggle").forEach((b) => {
              b.classList.remove("bg-blue-50", "text-blue-700", "active");
              b.classList.add("text-gray-700");
            });
            btn.classList.add("bg-blue-50", "text-blue-700", "active");
            btn.classList.remove("text-gray-700");

            if (btn.dataset.mode === "yearly") {
              amountLabel.textContent = "per year";
              if (
                parseFloat(document.getElementById("ppf-amount").value) < 500
              ) {
                document.getElementById("ppf-amount").value = "150000";
              }
            } else {
              amountLabel.textContent = "per month";
              const amt =
                parseFloat(document.getElementById("ppf-amount").value) || 0;
              const maxMonthly = 150000 / 12;
              if (amt > maxMonthly) {
                document.getElementById("ppf-amount").value =
                  Math.floor(maxMonthly).toString();
              }
            }

            calculatePPF();
          });
        });

        document
          .getElementById("ppf-calc-btn")
          .addEventListener("click", calculatePPF);

        ["ppf-amount", "ppf-rate", "ppf-years", "ppf-timing"].forEach((id) => {
          document.getElementById(id).addEventListener("change", calculatePPF);
        });

        document
          .getElementById("ppf-toggle-schedule")
          .addEventListener("click", () => {
            const wrapper = document.getElementById("ppf-schedule-wrapper");
            const btn = document.getElementById("ppf-toggle-schedule");
            const hidden = wrapper.classList.toggle("hidden");
            btn.textContent = hidden ? "Show schedule" : "Hide schedule";
          });

        // Initial calculation
        calculatePPF();
      });
    </script>

