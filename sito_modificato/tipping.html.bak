    <script>
      // Utility: format currency
      function formatMoney(value, symbol) {
        if (isNaN(value) || !isFinite(value)) return symbol + "0.00";
        const absVal = Math.abs(value);
        const decimals = absVal < 1000 ? 2 : 2;
        return symbol + value.toFixed(decimals);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const currencySelect = document.getElementById("currency-symbol");
        const customCurrencyInput = document.getElementById("custom-currency");
        const currencyPrefix = document.getElementById("currency-prefix");

        const billInput = document.getElementById("bill-amount");
        const tipPercentInput = document.getElementById("tip-percent");
        const peopleInput = document.getElementById("people-count");
        const taxPercentInput = document.getElementById("tax-percent");

        const tipAmountEl = document.getElementById("tip-amount");
        const totalAmountEl = document.getElementById("total-amount");
        const tipPerPersonEl = document.getElementById("tip-per-person");
        const totalPerPersonEl = document.getElementById("total-per-person");
        const roundingNoteEl = document.getElementById("rounding-note");

        const taxInfoEl = document.getElementById("tax-info");
        const taxAmountEl = document.getElementById("tax-amount");
        const tipPreTaxEl = document.getElementById("tip-pre-tax");
        const tipPostTaxEl = document.getElementById("tip-post-tax");

        let currentSymbol = "$";
        let roundingMode = "none"; // none | total | perPerson

        function getCurrencySymbol() {
          if (currencySelect.value === "custom") {
            return customCurrencyInput.value.trim() || "";
          }
          return currencySelect.value;
        }

        function getInputs() {
          const bill = parseFloat(billInput.value) || 0;
          const tipPercent = parseFloat(tipPercentInput.value) || 0;
          const people = Math.max(1, parseInt(peopleInput.value, 10) || 1);
          const taxPercent = parseFloat(taxPercentInput.value);
          return {
            bill,
            tipPercent,
            people,
            taxPercent: isNaN(taxPercent) ? null : taxPercent,
          };
        }

        function applyRounding(total, perPerson, symbol) {
          let roundedTotal = total;
          let roundedPerPerson = perPerson;
          let note = "";

          if (roundingMode === "total") {
            roundedTotal = Math.round(total);
            const diff = roundedTotal - total;
            roundedPerPerson = roundedTotal / (getInputs().people || 1);
            if (Math.abs(diff) >= 0.01) {
              note = `Total rounded to nearest whole ${
                symbol.trim() || "unit"
              } (difference ${formatMoney(diff, symbol)}).`;
            }
          } else if (roundingMode === "perPerson") {
            roundedPerPerson = Math.round(perPerson);
            const newTotal = roundedPerPerson * (getInputs().people || 1);
            const diff = newTotal - total;
            roundedTotal = newTotal;
            if (Math.abs(diff) >= 0.01) {
              note = `Per‑person total rounded to nearest whole ${
                symbol.trim() || "unit"
              } (difference ${formatMoney(diff, symbol)}).`;
            }
          }

          return { roundedTotal, roundedPerPerson, note };
        }

        function recalc() {
          currentSymbol = getCurrencySymbol();
          currencyPrefix.textContent = currentSymbol || "";

          const { bill, tipPercent, people, taxPercent } = getInputs();

          const rawTip = bill * (tipPercent / 100);
          const rawTotal = bill + rawTip;
          const rawTipPerPerson = rawTip / people;
          const rawTotalPerPerson = rawTotal / people;

          const { roundedTotal, roundedPerPerson, note } = applyRounding(
            rawTotal,
            rawTotalPerPerson,
            currentSymbol
          );

          // If we rounded, recompute tip from rounded total to keep consistency
          let displayTip = rawTip;
          let displayTipPerPerson = rawTipPerPerson;

          if (roundingMode !== "none") {
            displayTip = roundedTotal - bill;
            displayTipPerPerson = displayTip / people;
          }

          tipAmountEl.textContent = formatMoney(displayTip, currentSymbol);
          totalAmountEl.textContent = formatMoney(roundedTotal, currentSymbol);
          tipPerPersonEl.textContent = formatMoney(
            displayTipPerPerson,
            currentSymbol
          );
          totalPerPersonEl.textContent = formatMoney(
            roundedPerPerson,
            currentSymbol
          );

          if (note) {
            roundingNoteEl.textContent = note;
            roundingNoteEl.classList.remove("hidden");
          } else {
            roundingNoteEl.classList.add("hidden");
          }

          // Tax info
          if (taxPercent !== null && taxPercent > 0) {
            const taxAmount = bill * (taxPercent / 100);
            const preTax = bill / (1 + taxPercent / 100);
            const postTaxTotal = bill;
            const tipOnPreTax = preTax * (tipPercent / 100);
            const tipOnPostTax = postTaxTotal * (tipPercent / 100);

            taxAmountEl.textContent = formatMoney(taxAmount, currentSymbol);
            tipPreTaxEl.textContent = formatMoney(tipOnPreTax, currentSymbol);
            tipPostTaxEl.textContent = formatMoney(tipOnPostTax, currentSymbol);
            taxInfoEl.classList.remove("hidden");
          } else {
            taxInfoEl.classList.add("hidden");
          }
        }

        // Event listeners
        document.querySelectorAll("[data-tip-preset]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const val = parseFloat(btn.getAttribute("data-tip-preset"));
            if (!isNaN(val)) {
              tipPercentInput.value = val;
            }
            document.querySelectorAll("[data-tip-preset]").forEach((b) => {
              b.classList.remove("btn-toggle-active");
              b.classList.add("btn-toggle-inactive");
            });
            btn.classList.add("btn-toggle-active");
            btn.classList.remove("btn-toggle-inactive");
            recalc();
          });
        });

        [billInput, tipPercentInput, peopleInput, taxPercentInput].forEach(
          (input) => {
            input.addEventListener("input", recalc);
          }
        );

        currencySelect.addEventListener("change", () => {
          if (currencySelect.value === "custom") {
            customCurrencyInput.classList.remove("hidden");
            customCurrencyInput.focus();
          } else {
            customCurrencyInput.classList.add("hidden");
          }
          recalc();
        });

        customCurrencyInput.addEventListener("input", recalc);

        document.querySelectorAll("[data-round]").forEach((btn) => {
          btn.addEventListener("click", () => {
            roundingMode = btn.getAttribute("data-round");
            document.querySelectorAll("[data-round]").forEach((b) => {
              b.classList.remove(
                "bg-blue-600",
                "text-white",
                "border-blue-600"
              );
              b.classList.add("bg-white", "text-gray-700", "border-gray-300");
            });
            btn.classList.add("bg-blue-600", "text-white", "border-blue-600");
            recalc();
          });
        });

        // Initial calculation
        recalc();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
