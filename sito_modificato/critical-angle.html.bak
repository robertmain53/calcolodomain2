    <script>
      // Material refractive index map
      const materialIndex = {
        air: 1.0003,
        water: 1.33,
        glass: 1.5,
        diamond: 2.42,
        acrylic: 1.49,
        oil: 1.52,
      };

      const medium1Select = document.getElementById("medium1-select");
      const medium2Select = document.getElementById("medium2-select");
      const n1Input = document.getElementById("n1-input");
      const n2Input = document.getElementById("n2-input");
      const swapBtn = document.getElementById("swap-media-btn");
      const resetBtn = document.getElementById("reset-btn");

      const criticalAngleOutput = document.getElementById(
        "critical-angle-output"
      );
      const criticalAngleRadians = document.getElementById(
        "critical-angle-radians"
      );
      const tirCondition = document.getElementById("tir-condition");
      const statusMessage = document.getElementById("status-message");

      const incidentAngleInput = document.getElementById(
        "incident-angle-input"
      );
      const incidentAngleSlider = document.getElementById(
        "incident-angle-slider"
      );
      const behaviorOutput = document.getElementById("behavior-output");

      const incidentRay = document.getElementById("incident-ray");
      const secondaryRay = document.getElementById("secondary-ray");

      function setIndexFromSelect(selectEl, inputEl) {
        const val = selectEl.value;
        if (val === "custom") return;
        if (materialIndex[val] !== undefined) {
          inputEl.value = materialIndex[val].toFixed(4);
        }
      }

      medium1Select.addEventListener("change", () => {
        setIndexFromSelect(medium1Select, n1Input);
        updateAll();
      });

      medium2Select.addEventListener("change", () => {
        setIndexFromSelect(medium2Select, n2Input);
        updateAll();
      });

      [n1Input, n2Input].forEach((el) => {
        el.addEventListener("input", () => {
          updateAll();
        });
      });

      swapBtn.addEventListener("click", () => {
        // swap indices
        const n1 = n1Input.value;
        const n2 = n2Input.value;
        n1Input.value = n2;
        n2Input.value = n1;

        // swap material selections
        const m1 = medium1Select.value;
        const m2 = medium2Select.value;
        medium1Select.value = m2;
        medium2Select.value = m1;

        updateAll();
      });

      resetBtn.addEventListener("click", () => {
        medium1Select.value = "glass";
        medium2Select.value = "air";
        n1Input.value = materialIndex["glass"].toFixed(4);
        n2Input.value = materialIndex["air"].toFixed(4);
        incidentAngleInput.value = 30.0;
        incidentAngleSlider.value = 30.0;
        updateAll();
      });

      incidentAngleInput.addEventListener("input", () => {
        let val = parseFloat(incidentAngleInput.value);
        if (isNaN(val)) val = 0;
        if (val < 0) val = 0;
        if (val > 89.9) val = 89.9;
        incidentAngleInput.value = val.toFixed(1);
        incidentAngleSlider.value = val;
        updateAll();
      });

      incidentAngleSlider.addEventListener("input", () => {
        const val = parseFloat(incidentAngleSlider.value);
        incidentAngleInput.value = val.toFixed(1);
        updateAll();
      });

      function computeCriticalAngle(n1, n2) {
        if (n1 <= 0 || n2 <= 0) return { exists: false, angleDeg: null };
        if (n1 <= n2) return { exists: false, angleDeg: null };
        const ratio = n2 / n1;
        if (ratio > 1) return { exists: false, angleDeg: null };
        const angleRad = Math.asin(ratio);
        const angleDeg = (angleRad * 180) / Math.PI;
        return { exists: true, angleDeg, angleRad };
      }

      function updateDiagram(incidentDeg, criticalInfo, n1, n2) {
        const cx = 150;
        const cy = 100;
        const incidentLen = 80;
        const secondaryLen = 80;

        const thetaRad = (incidentDeg * Math.PI) / 180;
        const ix = cx - incidentLen * Math.sin(thetaRad);
        const iy = cy + incidentLen * Math.cos(thetaRad);
        incidentRay.setAttribute("x1", ix);
        incidentRay.setAttribute("y1", iy);
        incidentRay.setAttribute("x2", cx);
        incidentRay.setAttribute("y2", cy);

        let mode = "refracted";
        if (criticalInfo.exists) {
          if (incidentDeg > criticalInfo.angleDeg + 1e-6) {
            mode = "tir";
          } else if (Math.abs(incidentDeg - criticalInfo.angleDeg) <= 0.5) {
            mode = "grazing";
          }
        } else {
          mode = "refracted";
        }

        let sx, sy;
        if (mode === "tir") {
          // reflected: symmetric across normal
          const rx = cx - incidentLen * Math.sin(thetaRad);
          const ry = cy - incidentLen * Math.cos(thetaRad);
          sx = rx;
          sy = ry;
          secondaryRay.setAttribute("stroke", "#f97316"); // orange
        } else if (mode === "grazing") {
          sx = cx + secondaryLen;
          sy = cy;
          secondaryRay.setAttribute("stroke", "#16a34a"); // green
        } else {
          // refracted: use Snell's law if n1>0,n2>0
          let theta2 = 0;
          if (n1 > 0 && n2 > 0) {
            const sin2 = (n1 * Math.sin(thetaRad)) / n2;
            if (Math.abs(sin2) <= 1) {
              theta2 = Math.asin(sin2);
            } else {
              theta2 = Math.PI / 2;
            }
          }
          sx = cx + secondaryLen * Math.sin(theta2);
          sy = cy + secondaryLen * Math.cos(theta2);
          secondaryRay.setAttribute("stroke", "#16a34a"); // green
        }

        secondaryRay.setAttribute("x1", cx);
        secondaryRay.setAttribute("y1", cy);
        secondaryRay.setAttribute("x2", sx);
        secondaryRay.setAttribute("y2", sy);
      }

      function updateAll() {
        const n1 = parseFloat(n1Input.value);
        const n2 = parseFloat(n2Input.value);
        const incidentDeg = parseFloat(incidentAngleInput.value) || 0;

        const crit = computeCriticalAngle(n1, n2);

        if (!crit.exists) {
          criticalAngleOutput.textContent = "No critical angle (n₁ ≤ n₂)";
          criticalAngleRadians.textContent = "";
          tirCondition.textContent =
            "Total internal reflection cannot occur for this pair of media.";
          statusMessage.textContent =
            "Increase n₁ or decrease n₂ so that n₁ > n₂ to obtain a critical angle.";
        } else {
          criticalAngleOutput.innerHTML =
            "θ<sub>c</sub> = " + crit.angleDeg.toFixed(2) + "°";
          criticalAngleRadians.textContent =
            "In radians: " + crit.angleRad.toFixed(3) + " rad";
          tirCondition.innerHTML =
            "Condition for total internal reflection: θ<sub>i</sub> > " +
            crit.angleDeg.toFixed(2) +
            "°";
          statusMessage.textContent = "";
        }

        if (!crit.exists) {
          behaviorOutput.innerHTML =
            "For n₁ ≤ n₂, there is no critical angle and light is always partially refracted.";
        } else {
          if (incidentDeg < crit.angleDeg - 1e-6) {
            behaviorOutput.innerHTML =
              "At θ<sub>i</sub> = " +
              incidentDeg.toFixed(1) +
              "°, light is <strong>partially refracted</strong> and partially reflected.";
          } else if (Math.abs(incidentDeg - crit.angleDeg) <= 0.5) {
            behaviorOutput.innerHTML =
              "At θ<sub>i</sub> ≈ θ<sub>c</sub>, the refracted ray <strong>grazes along the interface</strong>.";
          } else {
            behaviorOutput.innerHTML =
              "At θ<sub>i</sub> = " +
              incidentDeg.toFixed(1) +
              "°, light undergoes <strong>total internal reflection</strong>.";
          }
        }

        updateDiagram(incidentDeg, crit, n1, n2);
      }

      // Initialize
      document.addEventListener("DOMContentLoaded", updateAll);
    </script>

