    <script>
      // VAT calculator logic
      (function () {
        const countrySelect = document.getElementById("vat-country");
        const rateInput = document.getElementById("vat-rate");
        const amountInput = document.getElementById("vat-amount");
        const currencySelect = document.getElementById("vat-currency");
        const modeButtons = document.querySelectorAll(".vat-mode-btn");
        const calcBtn = document.getElementById("vat-calc-btn");
        const clearBtn = document.getElementById("vat-clear-btn");

        const netEl = document.getElementById("vat-net");
        const taxEl = document.getElementById("vat-tax");
        const grossEl = document.getElementById("vat-gross");
        const breakdown = document.getElementById("vat-breakdown");
        const breakdownText = document.getElementById("vat-breakdown-text");

        let mode = "net"; // 'net' or 'gross'

        function setMode(newMode) {
          mode = newMode;
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === mode) {
              btn.classList.remove("bg-gray-100", "text-gray-700");
              btn.classList.add("bg-blue-600", "text-white");
            } else {
              btn.classList.remove("bg-blue-600", "text-white");
              btn.classList.add("bg-gray-100", "text-gray-700");
            }
          });
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => setMode(btn.dataset.mode));
        });

        countrySelect.addEventListener("change", () => {
          const val = countrySelect.value;
          if (val === "custom") return;
          const numeric = parseFloat(val.split("_")[0]);
          if (!isNaN(numeric)) {
            rateInput.value = numeric.toFixed(2).replace(/\.00$/, "");
          }
        });

        function formatMoney(value, symbol) {
          if (value == null || isNaN(value)) return "–";
          const fixed = value.toFixed(2);
          return symbol ? symbol + fixed : fixed;
        }

        function calculate() {
          const amount = parseFloat(amountInput.value);
          let rate = parseFloat(rateInput.value);
          const symbol = currencySelect.value;

          if (isNaN(amount) || amount < 0) {
            alert("Please enter a valid, non-negative amount.");
            return;
          }
          if (isNaN(rate) || rate < 0) {
            alert("Please enter a valid, non-negative VAT rate.");
            return;
          }

          rate = rate / 100; // convert to decimal

          let net,
            vat,
            gross,
            explanation = "";

          if (mode === "net") {
            net = amount;
            vat = net * rate;
            gross = net * (1 + rate);
            explanation = `Starting from a net price of ${formatMoney(
              net,
              symbol
            )} and a VAT rate of ${(rate * 100)
              .toFixed(2)
              .replace(
                /\.00$/,
                ""
              )}%, we compute VAT as net × rate = ${formatMoney(
              net,
              symbol
            )} × ${(rate * 100)
              .toFixed(2)
              .replace(/\.00$/, "")}% and gross as net × (1 + rate).`;
          } else {
            gross = amount;
            net = gross / (1 + rate);
            vat = gross - net;
            explanation = `Starting from a gross price of ${formatMoney(
              gross,
              symbol
            )} and a VAT rate of ${(rate * 100)
              .toFixed(2)
              .replace(
                /\.00$/,
                ""
              )}%, we compute net as gross ÷ (1 + rate) and VAT as gross − net.`;
          }

          netEl.textContent = formatMoney(net, symbol);
          taxEl.textContent = formatMoney(vat, symbol);
          grossEl.textContent = formatMoney(gross, symbol);

          breakdownText.textContent = explanation;
          breakdown.classList.remove("hidden");
        }

        function clearAll() {
          amountInput.value = "";
          netEl.textContent = "–";
          taxEl.textContent = "–";
          grossEl.textContent = "–";
          breakdown.classList.add("hidden");
        }

        calcBtn.addEventListener("click", calculate);
        clearBtn.addEventListener("click", clearAll);

        amountInput.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            calculate();
          }
        });

        // Quick VAT table
        const tableBody = document.getElementById("vat-quick-table-body");
        function buildQuickTable() {
          const baseNetValues = [10, 50, 100, 250, 500, 1000];
          const rate = 0.22; // 22% example
          tableBody.innerHTML = "";
          baseNetValues.forEach((n) => {
            const vat = n * rate;
            const gross = n * (1 + rate);
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="px-3 py-2 border-b">€${n.toFixed(2)}</td>
          <td class="px-3 py-2 border-b">€${vat.toFixed(2)}</td>
          <td class="px-3 py-2 border-b">€${gross.toFixed(2)}</td>
        `;
            tableBody.appendChild(tr);
          });
        }
        buildQuickTable();

        // Initial calculation
        calculate();
      })();
    </script>

