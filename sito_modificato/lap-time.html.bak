    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = document.querySelectorAll(".tab-panel");

      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => b.classList.remove("tab-active"));
          tabPanels.forEach((p) => p.classList.add("hidden"));
          btn.classList.add("tab-active");
          document.getElementById(target).classList.remove("hidden");
        });
      });
      // Set initial active tab
      if (tabButtons.length) tabButtons[0].classList.add("tab-active");

      function formatTimeFromSeconds(totalSeconds) {
        if (!isFinite(totalSeconds) || totalSeconds < 0) return "—";
        const minutes = Math.floor(totalSeconds / 60);
        const seconds = totalSeconds - minutes * 60;
        return `${String(minutes).padStart(1, "0")}:${seconds
          .toFixed(3)
          .padStart(6, "0")}`;
      }

      function formatHMS(totalSeconds) {
        if (!isFinite(totalSeconds) || totalSeconds < 0) return "—";
        const hours = Math.floor(totalSeconds / 3600);
        const minutes = Math.floor((totalSeconds % 3600) / 60);
        const seconds = totalSeconds % 60;
        const parts = [];
        if (hours) parts.push(`${hours} h`);
        if (minutes || hours) parts.push(`${minutes} min`);
        parts.push(`${seconds.toFixed(1)} s`);
        return parts.join(" ");
      }

      // Tab 1: Lap time from distance & speed
      document
        .getElementById("btn-calc-lap-from-speed")
        .addEventListener("click", () => {
          const d = parseFloat(document.getElementById("lap-distance").value);
          const v = parseFloat(document.getElementById("avg-speed").value);
          const dUnit = document.getElementById("lap-distance-unit").value;
          const vUnit = document.getElementById("avg-speed-unit").value;

          if (!(d > 0) || !(v > 0)) {
            alert("Please enter positive values for distance and speed.");
            return;
          }

          // Convert distance to km
          let distanceKm = dUnit === "mi" ? d * 1.609344 : d;
          // Convert speed to km/h
          let speedKmh = vUnit === "mph" ? v * 1.609344 : v;

          const timeHours = distanceKm / speedKmh;
          const timeSeconds = timeHours * 3600;

          const resultBox = document.getElementById("lap-from-speed-result");
          document.getElementById("lap-from-speed-main").textContent =
            formatTimeFromSeconds(timeSeconds);
          document.getElementById(
            "lap-from-speed-secondary"
          ).textContent = `That is approximately ${timeSeconds.toFixed(
            3
          )} seconds per lap.`;
          document.getElementById(
            "lap-from-speed-pace-label"
          ).textContent = `${distanceKm.toFixed(3)} km @ ${speedKmh.toFixed(
            1
          )} km/h`;
          resultBox.classList.remove("hidden");
        });

      document
        .getElementById("btn-reset-speed")
        .addEventListener("click", () => {
          document.getElementById("lap-distance").value = "";
          document.getElementById("avg-speed").value = "";
          document
            .getElementById("lap-from-speed-result")
            .classList.add("hidden");
        });

      // Tab 2: Average lap from total time & laps
      document
        .getElementById("btn-calc-avg-lap")
        .addEventListener("click", () => {
          const h =
            parseFloat(document.getElementById("total-hours").value) || 0;
          const m =
            parseFloat(document.getElementById("total-minutes").value) || 0;
          const s =
            parseFloat(document.getElementById("total-seconds").value) || 0;
          const laps = parseFloat(document.getElementById("lap-count").value);

          const totalSeconds = h * 3600 + m * 60 + s;

          if (!(totalSeconds > 0) || !(laps > 0)) {
            alert("Please enter a positive total time and number of laps.");
            return;
          }

          const avgLapSeconds = totalSeconds / laps;

          document.getElementById("avg-lap-main").textContent =
            formatTimeFromSeconds(avgLapSeconds);
          document.getElementById(
            "avg-lap-secondary"
          ).textContent = `Average of ${avgLapSeconds.toFixed(
            3
          )} seconds per lap over ${laps.toFixed(0)} laps.`;
          document.getElementById(
            "avg-lap-pace-label"
          ).textContent = `Total time: ${formatHMS(totalSeconds)}`;
          document.getElementById("avg-lap-result").classList.remove("hidden");
        });

      document.getElementById("btn-reset-avg").addEventListener("click", () => {
        document.getElementById("total-hours").value = "";
        document.getElementById("total-minutes").value = "";
        document.getElementById("total-seconds").value = "";
        document.getElementById("lap-count").value = "";
        document.getElementById("avg-lap-result").classList.add("hidden");
      });

      // Parse lap time string into seconds
      function parseLapTime(input) {
        if (!input) return NaN;
        const str = String(input).trim();
        if (/^\d+(\.\d+)?$/.test(str)) {
          return parseFloat(str);
        }
        const parts = str.split(":");
        if (parts.length === 2) {
          const minutes = parseFloat(parts[0]);
          const seconds = parseFloat(parts[1]);
          if (isNaN(minutes) || isNaN(seconds)) return NaN;
          return minutes * 60 + seconds;
        }
        return NaN;
      }

      // Tab 3: Session planner
      document
        .getElementById("btn-calc-session")
        .addEventListener("click", () => {
          const lapTimeStr = document.getElementById("session-lap-time").value;
          const laps = parseFloat(
            document.getElementById("session-laps").value
          );
          const pits = parseFloat(
            document.getElementById("session-pits").value || "0"
          );
          const pitLoss = parseFloat(
            document.getElementById("pit-loss").value || "0"
          );

          const lapSeconds = parseLapTime(lapTimeStr);

          if (!(lapSeconds > 0) || !(laps > 0)) {
            alert(
              "Please enter a valid target lap time and a positive number of laps."
            );
            return;
          }
          if (pits < 0 || pitLoss < 0) {
            alert("Pit stops and pit loss must be zero or positive.");
            return;
          }

          const drivingTime = lapSeconds * laps;
          const pitTime = pits * pitLoss;
          const totalTime = drivingTime + pitTime;

          document.getElementById(
            "session-total-time"
          ).textContent = `Total session time: ${formatHMS(
            totalTime
          )} (driving: ${formatHMS(drivingTime)}, pits: ${formatHMS(pitTime)})`;

          document.getElementById(
            "session-total-distance"
          ).textContent = `Average lap time: ${formatTimeFromSeconds(
            lapSeconds
          )} over ${laps.toFixed(0)} laps.`;

          if (pits > 0 && pitLoss > 0) {
            document.getElementById(
              "session-pit-impact"
            ).textContent = `Pit stops add ${pitTime.toFixed(
              1
            )} seconds (${formatHMS(pitTime)}) to the session.`;
          } else {
            document.getElementById("session-pit-impact").textContent =
              "No pit stop time loss included.";
          }

          // Pace table
          const tbody = document.getElementById("session-pace-table");
          tbody.innerHTML = "";
          const maxRows = Math.min(50, Math.round(laps)); // avoid huge tables
          for (let i = 1; i <= maxRows; i++) {
            const tr = document.createElement("tr");
            const tdLap = document.createElement("td");
            const tdTime = document.createElement("td");
            tdLap.className = "px-3 py-1 border-b border-gray-100";
            tdTime.className = "px-3 py-1 border-b border-gray-100 font-mono";
            tdLap.textContent = i;
            tdTime.textContent = formatTimeFromSeconds(lapSeconds * i);
            tr.appendChild(tdLap);
            tr.appendChild(tdTime);
            tbody.appendChild(tr);
          }
          if (laps > maxRows) {
            const tr = document.createElement("tr");
            const td = document.createElement("td");
            td.colSpan = 2;
            td.className = "px-3 py-2 text-xs text-gray-500";
            td.textContent = `Showing first ${maxRows} laps of ${laps.toFixed(
              0
            )}.`;
            tr.appendChild(td);
            tbody.appendChild(tr);
          }

          document.getElementById("session-result").classList.remove("hidden");
        });

      document
        .getElementById("btn-reset-session")
        .addEventListener("click", () => {
          document.getElementById("session-lap-time").value = "";
          document.getElementById("session-laps").value = "";
          document.getElementById("session-pits").value = "";
          document.getElementById("pit-loss").value = "";
          document.getElementById("session-result").classList.add("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
