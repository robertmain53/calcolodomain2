    <script>
      // Utility: parse numeric input with support for scientific notation
      function parseInput(value) {
        if (typeof value !== "string") return NaN;
        const trimmed = value.trim();
        if (!trimmed) return NaN;
        // Allow commas as thousand separators
        const normalized = trimmed.replace(/,/g, "");
        return Number(normalized);
      }

      function formatNumber(value, decimals) {
        if (!isFinite(value)) return "";
        return value.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: 0,
        });
      }

      (function () {
        const UCI_TO_BQ = 37000; // 1 µCi = 3.7e4 Bq

        const uciInput = document.getElementById("uciInput");
        const bqInput = document.getElementById("bqInput");
        const convertToBqBtn = document.getElementById("convertToBqBtn");
        const convertToUciBtn = document.getElementById("convertToUciBtn");
        const swapBtn = document.getElementById("swapBtn");
        const clearBtn = document.getElementById("clearBtn");
        const decimalsSelect = document.getElementById("decimalsSelect");

        const resultContainer = document.getElementById("resultContainer");
        const resultText = document.getElementById("resultText");
        const errorContainer = document.getElementById("errorContainer");
        const errorText = document.getElementById("errorText");

        function showError(message) {
          errorText.textContent = message;
          errorContainer.classList.remove("hidden");
          resultContainer.classList.add("hidden");
        }

        function showResult(message) {
          resultText.innerHTML = message;
          resultContainer.classList.remove("hidden");
          errorContainer.classList.add("hidden");
        }

        function clearMessages() {
          errorContainer.classList.add("hidden");
          resultContainer.classList.add("hidden");
        }

        function convertUciToBq() {
          clearMessages();
          const decimals = parseInt(decimalsSelect.value, 10) || 4;
          const uciVal = parseInput(uciInput.value);

          if (isNaN(uciVal)) {
            showError(
              "Please enter a valid number for microcuries (µCi). Scientific notation like 1e6 is allowed."
            );
            return;
          }

          const bqVal = uciVal * UCI_TO_BQ;
          bqInput.value = formatNumber(bqVal, decimals);

          const msg = `
        <strong>Result:</strong> ${formatNumber(uciVal, decimals)} µCi
        = <strong>${formatNumber(bqVal, decimals)}</strong> Bq
        <br><span class="text-xs text-blue-900">Using 1 µCi = 3.7 × 10<sup>4</sup> Bq</span>
      `;
          showResult(msg);
        }

        function convertBqToUci() {
          clearMessages();
          const decimals = parseInt(decimalsSelect.value, 10) || 4;
          const bqVal = parseInput(bqInput.value);

          if (isNaN(bqVal)) {
            showError(
              "Please enter a valid number for becquerels (Bq). Scientific notation like 3.7e4 is allowed."
            );
            return;
          }

          const uciVal = bqVal / UCI_TO_BQ;
          uciInput.value = formatNumber(uciVal, decimals);

          const msg = `
        <strong>Result:</strong> ${formatNumber(bqVal, decimals)} Bq
        = <strong>${formatNumber(uciVal, decimals)}</strong> µCi
        <br><span class="text-xs text-blue-900">Using 1 Bq ≈ 2.7027 × 10<sup>-5</sup> µCi</span>
      `;
          showResult(msg);
        }

        function swapValues() {
          const tmp = uciInput.value;
          uciInput.value = bqInput.value;
          bqInput.value = tmp;
          clearMessages();
        }

        function clearAll() {
          uciInput.value = "";
          bqInput.value = "";
          clearMessages();
          uciInput.focus();
        }

        // Event listeners
        convertToBqBtn.addEventListener("click", convertUciToBq);
        convertToUciBtn.addEventListener("click", convertBqToUci);
        swapBtn.addEventListener("click", swapValues);
        clearBtn.addEventListener("click", clearAll);

        // Enter key behavior: decide based on focused field
        uciInput.addEventListener("keydown", function (e) {
          if (e.key === "Enter") {
            e.preventDefault();
            convertUciToBq();
          }
        });
        bqInput.addEventListener("keydown", function (e) {
          if (e.key === "Enter") {
            e.preventDefault();
            convertBqToUci();
          }
        });

        // Change precision re-run last visible result if possible
        decimalsSelect.addEventListener("change", function () {
          if (!resultContainer.classList.contains("hidden")) {
            // Try to recompute based on which field was edited last (heuristic)
            if (document.activeElement === bqInput) {
              convertBqToUci();
            } else {
              convertUciToBq();
            }
          }
        });
      })();
    </script>

