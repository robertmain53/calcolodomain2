<script>
    function calculatePizzas() {
        const peopleCount = document.getElementById('peopleCount').value;
        const slicesPerPerson = document.getElementById('slicesPerPerson').value;
        const slicesPerPizza = 8; // Assume a standard pizza size
        const totalSlices = peopleCount * slicesPerPerson;
        const pizzasNeeded = Math.ceil(totalSlices / slicesPerPizza);
        document.getElementById('totalPizzas').textContent = pizzasNeeded;
    }
</script>



