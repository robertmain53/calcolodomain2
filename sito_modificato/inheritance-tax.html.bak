    <script>
      // Country toggle
      const btnUK = document.getElementById("btn-uk");
      const btnIT = document.getElementById("btn-it");
      const ukSection = document.getElementById("uk-section");
      const itSection = document.getElementById("it-section");

      function setCountry(country) {
        if (country === "uk") {
          ukSection.classList.remove("hidden");
          itSection.classList.add("hidden");
          btnUK.classList.add("toggle-btn-active");
          btnUK.classList.remove("toggle-btn-inactive");
          btnIT.classList.add("toggle-btn-inactive");
          btnIT.classList.remove("toggle-btn-active");
          btnUK.setAttribute("aria-selected", "true");
          btnIT.setAttribute("aria-selected", "false");
        } else {
          ukSection.classList.add("hidden");
          itSection.classList.remove("hidden");
          btnIT.classList.add("toggle-btn-active");
          btnIT.classList.remove("toggle-btn-inactive");
          btnUK.classList.add("toggle-btn-inactive");
          btnUK.classList.remove("toggle-btn-active");
          btnIT.setAttribute("aria-selected", "true");
          btnUK.setAttribute("aria-selected", "false");
        }
      }

      btnUK.addEventListener("click", () => setCountry("uk"));
      btnIT.addEventListener("click", () => setCountry("it"));

      // Helper formatters
      function fmtCurrency(value, symbol) {
        if (isNaN(value)) value = 0;
        return (
          symbol + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }
      function fmtPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      // UK calculator
      document.getElementById("uk-calc-btn").addEventListener("click", () => {
        const estate =
          parseFloat(document.getElementById("uk-estate-value").value) || 0;
        const debts =
          parseFloat(document.getElementById("uk-debts").value) || 0;
        const spouseShare =
          parseFloat(document.getElementById("uk-spouse-share").value) || 0;
        const charityShare =
          parseFloat(document.getElementById("uk-charity-share").value) || 0;
        const nrb = parseFloat(document.getElementById("uk-nrb").value) || 0;
        const rnrb = parseFloat(document.getElementById("uk-rnrb").value) || 0;
        const transferable = document.getElementById(
          "uk-transferable-nrb"
        ).checked;
        const mainRate =
          (parseFloat(document.getElementById("uk-rate").value) || 0) / 100;
        const charityRate =
          (parseFloat(document.getElementById("uk-charity-rate").value) || 0) /
          100;

        let breakdown = [];
        let netEstate = Math.max(0, estate - debts);
        breakdown.push(
          `Net estate after debts: ${fmtCurrency(netEstate, "£")}`
        );

        // Exempt transfers
        const exemptSpouse = Math.min(spouseShare, netEstate);
        netEstate -= exemptSpouse;
        breakdown.push(
          `Less spouse/civil partner transfers (assumed exempt): ${fmtCurrency(
            exemptSpouse,
            "£"
          )}`
        );

        const exemptCharity = Math.min(charityShare, netEstate);
        netEstate -= exemptCharity;
        breakdown.push(
          `Less charitable transfers (assumed exempt): ${fmtCurrency(
            exemptCharity,
            "£"
          )}`
        );

        // Allowances
        let totalNRB = nrb + rnrb;
        if (transferable) {
          totalNRB += nrb; // simple 100% uplift
          breakdown.push(
            `Including 100% transferable nil-rate band from late spouse: +${fmtCurrency(
              nrb,
              "£"
            )}`
          );
        }
        const allowanceUsed = Math.min(netEstate, totalNRB);
        const taxableEstate = Math.max(0, netEstate - totalNRB);

        breakdown.push(
          `Total nil-rate and residence bands: ${fmtCurrency(totalNRB, "£")}`
        );
        breakdown.push(`Allowances used: ${fmtCurrency(allowanceUsed, "£")}`);
        breakdown.push(
          `Taxable estate after allowances: ${fmtCurrency(taxableEstate, "£")}`
        );

        // Charity 10% test approximation
        let rateToUse = mainRate;
        if (taxableEstate > 0) {
          const baseline = taxableEstate + exemptCharity; // rough baseline
          const charityShareOfBaseline =
            baseline > 0 ? exemptCharity / baseline : 0;
          if (charityShareOfBaseline >= 0.1 && charityRate > 0) {
            rateToUse = charityRate;
            breakdown.push(
              `Charitable gifts ≈ ${(charityShareOfBaseline * 100).toFixed(
                1
              )}% of baseline → reduced rate applied.`
            );
          }
        }

        const taxDue = taxableEstate * rateToUse;
        const effectiveRate = estate > 0 ? (taxDue / estate) * 100 : 0;

        document.getElementById("uk-tax-due").textContent = fmtCurrency(
          taxDue,
          "£"
        );
        document.getElementById("uk-taxable").textContent = fmtCurrency(
          taxableEstate,
          "£"
        );
        document.getElementById(
          "uk-allowances"
        ).textContent = `Total allowances used: ${fmtCurrency(
          allowanceUsed,
          "£"
        )}`;
        document.getElementById(
          "uk-effective-rate"
        ).textContent = `Effective rate on total estate: ${fmtPercent(
          effectiveRate
        )}`;
        document.getElementById("uk-breakdown").innerHTML = breakdown
          .map((line) => `<p>${line}</p>`)
          .join("");

        document.getElementById("uk-results").classList.remove("hidden");
      });

      // Italy beneficiaries dynamic table
      const itBody = document.getElementById("it-beneficiaries-body");
      const relationshipDefaults = {
        spouse_child: { allowance: 1000000, rate: 4 },
        sibling: { allowance: 100000, rate: 6 },
        other_relative: { allowance: 0, rate: 6 },
        unrelated: { allowance: 0, rate: 8 },
        charity: { allowance: 0, rate: 0 },
      };

      function createBeneficiaryRow(index) {
        const tr = document.createElement("tr");
        tr.dataset.index = index;

        tr.innerHTML = `
      <td class="px-2 py-1 border-b">
        <input type="text" class="w-full border rounded px-2 py-1 text-sm" placeholder="e.g. Spouse">
      </td>
      <td class="px-2 py-1 border-b">
        <select class="w-full border rounded px-2 py-1 text-sm">
          <option value="spouse_child">Spouse / Child</option>
          <option value="sibling">Sibling</option>
          <option value="other_relative">Other relative</option>
          <option value="unrelated">Unrelated person</option>
          <option value="charity">Charity / exempt</option>
        </select>
      </td>
      <td class="px-2 py-1 border-b text-right">
        <input type="number" min="0" step="1000" class="w-full border rounded px-2 py-1 text-sm text-right" placeholder="0">
      </td>
      <td class="px-2 py-1 border-b text-right">
        <input type="number" min="0" step="1000" class="w-full border rounded px-2 py-1 text-sm text-right">
      </td>
      <td class="px-2 py-1 border-b text-right">
        <input type="number" min="0" max="100" step="0.5" class="w-full border rounded px-2 py-1 text-sm text-right">
      </td>
      <td class="px-2 py-1 border-b text-center">
        <button type="button" class="text-red-600 text-xs hover:underline">Remove</button>
      </td>
    `;

        const select = tr.querySelector("select");
        const allowanceInput = tr.children[3].querySelector("input");
        const rateInput = tr.children[4].querySelector("input");

        function applyDefaults() {
          const rel = select.value;
          const def = relationshipDefaults[rel];
          if (def) {
            allowanceInput.value = def.allowance;
            rateInput.value = def.rate;
          }
        }

        select.addEventListener("change", applyDefaults);
        tr.querySelector("button").addEventListener("click", () => {
          tr.remove();
        });

        // set initial defaults
        applyDefaults();
        return tr;
      }

      document
        .getElementById("it-add-beneficiary")
        .addEventListener("click", () => {
          const index = itBody.children.length;
          const row = createBeneficiaryRow(index);
          itBody.appendChild(row);
        });

      // Add one default beneficiary row on load
      (function initItaly() {
        const row = createBeneficiaryRow(0);
        itBody.appendChild(row);
      })();

      // Italy calculator
      document.getElementById("it-calc-btn").addEventListener("click", () => {
        const estate =
          parseFloat(document.getElementById("it-estate-value").value) || 0;
        const debts =
          parseFloat(document.getElementById("it-debts").value) || 0;
        const netEstate = Math.max(0, estate - debts);

        let totalShare = 0;
        let totalTaxable = 0;
        let totalTax = 0;
        let totalAllowances = 0;
        const breakdownLines = [];

        Array.from(itBody.children).forEach((tr, idx) => {
          const nameInput = tr.children[0].querySelector("input");
          const relSelect = tr.children[1].querySelector("select");
          const shareInput = tr.children[2].querySelector("input");
          const allowanceInput = tr.children[3].querySelector("input");
          const rateInput = tr.children[4].querySelector("input");

          const name = nameInput.value.trim() || `Beneficiary ${idx + 1}`;
          const share = parseFloat(shareInput.value) || 0;
          const allowance = parseFloat(allowanceInput.value) || 0;
          const rate = (parseFloat(rateInput.value) || 0) / 100;

          if (share <= 0) return;

          totalShare += share;
          const taxable = Math.max(0, share - allowance);
          const tax = taxable * rate;

          totalTaxable += taxable;
          totalTax += tax;
          totalAllowances += Math.min(share, allowance);

          breakdownLines.push(
            `<p><strong>${name}</strong> (${
              relSelect.options[relSelect.selectedIndex].text
            }): ` +
              `share ${fmtCurrency(share, "€")}, allowance ${fmtCurrency(
                allowance,
                "€"
              )}, ` +
              `taxable ${fmtCurrency(taxable, "€")}, tax ${fmtCurrency(
                tax,
                "€"
              )}</p>`
          );
        });

        const effectiveRate = netEstate > 0 ? (totalTax / netEstate) * 100 : 0;

        document.getElementById("it-tax-due").textContent = fmtCurrency(
          totalTax,
          "€"
        );
        document.getElementById("it-taxable").textContent = fmtCurrency(
          totalTaxable,
          "€"
        );
        document.getElementById(
          "it-allowances"
        ).textContent = `Total allowances used: ${fmtCurrency(
          totalAllowances,
          "€"
        )}`;
        document.getElementById(
          "it-effective-rate"
        ).textContent = `Effective rate on net estate: ${fmtPercent(
          effectiveRate
        )}`;

        let header = `<p>Net estate after debts: ${fmtCurrency(
          netEstate,
          "€"
        )}</p>`;
        if (totalShare > 0 && Math.abs(totalShare - netEstate) > 1) {
          header += `<p class="text-amber-700">Note: Sum of beneficiary shares (${fmtCurrency(
            totalShare,
            "€"
          )}) does not match net estate (${fmtCurrency(netEstate, "€")}).</p>`;
        }

        document.getElementById("it-breakdown").innerHTML =
          header + breakdownLines.join("");
        document.getElementById("it-results").classList.remove("hidden");
      });

