    <script>
      // Quick Investment Planner
      function formatCurrency(num) {
        if (!isFinite(num)) return "$0";
        return (
          "$" + num.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function calculatePlanner() {
        const P0 =
          parseFloat(document.getElementById("start-balance").value) || 0;
        const C =
          parseFloat(document.getElementById("monthly-contrib").value) || 0;
        const years = parseFloat(document.getElementById("years").value) || 0;
        const r =
          (parseFloat(document.getElementById("return-rate").value) || 0) / 100;
        const infl =
          (parseFloat(document.getElementById("inflation-rate").value) || 0) /
          100;

        const months = Math.max(0, Math.round(years * 12));
        const i = r / 12;

        let fv = 0;
        if (i === 0) {
          fv = P0 + C * months;
        } else {
          fv =
            P0 * Math.pow(1 + i, months) +
            C * ((Math.pow(1 + i, months) - 1) / i);
        }
        const totalContrib = P0 + C * months;
        const growth = fv - totalContrib;

        let realFV = fv;
        if (infl > 0 && years > 0) {
          realFV = fv / Math.pow(1 + infl, years);
        }

        document.getElementById("total-contrib").textContent =
          formatCurrency(totalContrib);
        document.getElementById("future-value").textContent =
          formatCurrency(fv);
        document.getElementById("total-growth").textContent =
          formatCurrency(growth);
        document.getElementById("real-future-value").textContent =
          formatCurrency(realFV);

        // Projection table (yearly)
        const tbody = document.getElementById("projection-body");
        tbody.innerHTML = "";
        let balance = P0;
        let contribToDate = P0;
        const yearlyRate = r;

        for (let y = 1; y <= Math.max(1, Math.round(years)); y++) {
          // approximate yearly compounding with monthly contributions
          for (let m = 0; m < 12; m++) {
            balance = balance * (1 + yearlyRate / 12) + C;
            contribToDate += C;
          }
          const tr = document.createElement("tr");
          const tdYear = document.createElement("td");
          const tdBal = document.createElement("td");
          const tdContrib = document.createElement("td");

          tdYear.textContent = y;
          tdYear.className = "px-2 py-1 text-left";
          tdBal.textContent = formatCurrency(balance);
          tdBal.className = "px-2 py-1 text-right";
          tdContrib.textContent = formatCurrency(contribToDate);
          tdContrib.className = "px-2 py-1 text-right";

          tr.appendChild(tdYear);
          tr.appendChild(tdBal);
          tr.appendChild(tdContrib);
          tbody.appendChild(tr);
        }
      }

      // ROI calculator
      function calculateROI() {
        const invested =
          parseFloat(document.getElementById("roi-invested").value) || 0;
        const finalVal =
          parseFloat(document.getElementById("roi-final").value) || 0;
        const years =
          parseFloat(document.getElementById("roi-years").value) || 0;

        if (invested <= 0 || finalVal <= 0) {
          document.getElementById("roi-total").textContent = "—";
          document.getElementById("roi-annual").textContent = "—";
          return;
        }

        const totalROI = (finalVal - invested) / invested;
        let annualized = null;
        if (years > 0) {
          annualized = Math.pow(finalVal / invested, 1 / years) - 1;
        }

        document.getElementById("roi-total").textContent =
          (totalROI * 100).toFixed(2) + "%";
        document.getElementById("roi-annual").textContent =
          annualized !== null && isFinite(annualized)
            ? (annualized * 100).toFixed(2) + "%"
            : "—";
      }

      // Risk-return comparison
      function compareRiskReturn() {
        const aRet = parseFloat(document.getElementById("a-ret").value) || 0;
        const aVol = parseFloat(document.getElementById("a-vol").value) || 0;
        const bRet = parseFloat(document.getElementById("b-ret").value) || 0;
        const bVol = parseFloat(document.getElementById("b-vol").value) || 0;

        const aRatio = aVol > 0 ? aRet / aVol : 0;
        const bRatio = bVol > 0 ? bRet / bVol : 0;

        let msg = `Portfolio A: return ${aRet.toFixed(
          1
        )}%, volatility ${aVol.toFixed(1)}%. `;
        msg += `Portfolio B: return ${bRet.toFixed(
          1
        )}%, volatility ${bVol.toFixed(1)}%. `;

        if (aVol === 0 && bVol === 0) {
          msg +=
            "Enter non-zero volatility values to compare risk-adjusted returns.";
        } else if (aRatio > bRatio && aRet >= bRet) {
          msg += "A offers a better or similar return for each unit of risk.";
        } else if (bRatio > aRatio && bRet >= aRet) {
          msg += "B offers a better or similar return for each unit of risk.";
        } else {
          msg +=
            "Neither portfolio strictly dominates; choose based on your risk tolerance and goals.";
        }

        document.getElementById("risk-output").textContent = msg;
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calc-btn")
          .addEventListener("click", calculatePlanner);
        document
          .getElementById("roi-btn")
          .addEventListener("click", calculateROI);
        document
          .getElementById("risk-btn")
          .addEventListener("click", compareRiskReturn);
        calculatePlanner();
        calculateROI();
        compareRiskReturn();
      });

      // Mobile menu script (simple toggle)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", String(isHidden));
          });
        }
      });

