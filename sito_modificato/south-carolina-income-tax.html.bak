      ],
      standardDeduction: {
        single: 12950,
        married_joint: 25900,
        married_separate: 12950,
        hoh: 19400
      }
    },
    2023: {
      single: [
        { upTo: 3200, rate: 0.0 },
        { upTo: 6400, rate: 0.03 },
        { upTo: 9600, rate: 0.04 },
        { upTo: 12800, rate: 0.05 },
        { upTo: Infinity, rate: 0.06 }
      ],
      married_joint: [
        { upTo: 6400, rate: 0.0 },
        { upTo: 12800, rate: 0.03 },
        { upTo: 19200, rate: 0.04 },
        { upTo: 25600, rate: 0.05 },
        { upTo: Infinity, rate: 0.06 }
      ],
      married_separate: [
        { upTo: 3200, rate: 0.0 },
        { upTo: 6400, rate: 0.03 },
        { upTo: 9600, rate: 0.04 },
        { upTo: 12800, rate: 0.05 },
        { upTo: Infinity, rate: 0.06 }
      ],
      hoh: [
        { upTo: 4800, rate: 0.0 },
        { upTo: 9600, rate: 0.03 },
        { upTo: 14400, rate: 0.04 },
        { upTo: 19200, rate: 0.05 },
        { upTo: Infinity, rate: 0.06 }
      ],
      standardDeduction: {
        single: 12550,
        married_joint: 25100,
        married_separate: 12550,
        hoh: 18800
      }
    }
  };

  function formatCurrency(value) {
    if (!isFinite(value)) return '$0';
    return value.toLocaleString('en-US', { style: 'currency', currency: 'USD', maximumFractionDigits: 0 });
  }

  function formatPercent(value) {
    if (!isFinite(value)) return '0%';
    return value.toLocaleString('en-US', { maximumFractionDigits: 2 }) + '%';
  }

  function getPayPeriods(freq) {
    switch (freq) {
      case 'weekly': return 52;
      case 'biweekly': return 26;
      case 'monthly': return 12;
      default: return 1;
    }
  }

  function computeProgressiveTax(taxable, brackets) {
    let remaining = taxable;
    let lastLimit = 0;
    let tax = 0;
    let marginalRate = 0;

    for (const bracket of brackets) {
      if (remaining <= 0) break;
      const span = Math.min(remaining, bracket.upTo - lastLimit);
      if (span > 0) {
        tax += span * bracket.rate;
        marginalRate = bracket.rate;
        remaining -= span;
        lastLimit = bracket.upTo;
      }
    }
    return { tax, marginalRate };
  }

  function calculateScTax() {
    const year = parseInt(document.getElementById('tax-year').value, 10);
    const status = document.getElementById('filing-status').value;
    const income = parseFloat(document.getElementById('annual-income').value) || 0;
    const preTax = parseFloat(document.getElementById('pre_tax-deductions').value) || 0;
    const itemized = parseFloat(document.getElementById('itemized-deductions').value) || 0;
    const credits = parseFloat(document.getElementById('tax-credits').value) || 0;
    const localRate = parseFloat(document.getElementById('local-rate').value) || 0;
    const freq = document.getElementById('pay-frequency').value;
    const errorEl = document.getElementById('calc-error');

    errorEl.classList.add('hidden');
    errorEl.textContent = '';

    if (income < 0 || preTax < 0 || itemized < 0 || credits < 0) {
      errorEl.textContent = 'Amounts cannot be negative.';
      errorEl.classList.remove('hidden');
      return;
    }

    const config = scBrackets[year];
    if (!config) {
      errorEl.textContent = 'Unsupported tax year.';
      errorEl.classList.remove('hidden');
      return;
    }

    const stdDed = config.standardDeduction[status] || 0;
    const deductionUsed = Math.max(stdDed, itemized);
    const adjustedIncome = Math.max(0, income - preTax);
    const taxableIncome = Math.max(0, adjustedIncome - deductionUsed);

    const { tax: grossScTax, marginalRate } = computeProgressiveTax(taxableIncome, config[status]);
    const netScTax = Math.max(0, grossScTax - credits);
    const localTax = taxableIncome * (localRate / 100);
    const totalTax = netScTax + localTax;
    const effectiveRate = income > 0 ? (totalTax / income) * 100 : 0;
    const netIncome = Math.max(0, income - totalTax);
    const periods = getPayPeriods(freq);
    const perPayTax = totalTax / periods;
    const perPayTakeHome = netIncome / periods;

    // Update main cards
    document.getElementById('result-sc-tax').textContent = formatCurrency(netScTax);
    document.getElementById('result-effective-rate').textContent = formatPercent(effectiveRate);
    document.getElementById('result-takehome').textContent = formatCurrency(netIncome);

    // Update breakdown
    document.getElementById('bd-taxable-income').textContent = formatCurrency(taxableIncome);
    document.getElementById('bd-marginal-rate').textContent = formatPercent(marginalRate * 100);
    document.getElementById('bd-local-tax').textContent = formatCurrency(localTax);
    document.getElementById('bd-total-tax').textContent = formatCurrency(totalTax);
    document.getElementById('bd-perpay-tax').textContent = formatCurrency(perPayTax);
    document.getElementById('bd-perpay-takehome').textContent = formatCurrency(perPayTakeHome);
  }

  document.getElementById('calculate-btn').addEventListener('click', calculateScTax);
  document.getElementById('reset-btn').addEventListener('click', () => {
    document.getElementById('tax-year').value = '2024';
    document.getElementById('filing-status').value = 'single';
    document.getElementById('annual-income').value = 60000;
    document.getElementById('pay-frequency').value = 'biweekly';
    document.getElementById('pre_tax-deductions').value = 0;
    document.getElementById('itemized-deductions').value = 0;
    document.getElementById('tax-credits').value = 0;
    document.getElementById('local-rate').value = 0;
    document.getElementById('calc-error').classList.add('hidden');
    calculateScTax();
  });

  // Auto-calc on load
  document.addEventListener('DOMContentLoaded', calculateScTax);
</script>

