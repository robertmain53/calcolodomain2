  // --- South Carolina Income Tax Calculator Logic ---
  // NOTE: Brackets and standard deductions are approximate and for educational use only.
  const scBrackets = {
    // Example progressive structure; in a real deployment, keep in sync with SC DOR each year.
    2024: {
      single: [
        { upTo: 3200, rate: 0.0 },
        { upTo: 6400, rate: 0.03 },
        { upTo: 9600, rate: 0.04 },
