            .querySelectorAll(".tab-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById(target).classList.remove("hidden");
        });
      });

      // Utility functions
      function toFeet(value, unit) {
        const v = parseFloat(value) || 0;
        if (unit === "ft") return v;
        if (unit === "m") return v * 3.28084;
        return v;
      }
      function thicknessToFeet(value, unit) {
        const v = parseFloat(value) || 0;
        if (unit === "in") return v / 12;
        if (unit === "cm") return v / 30.48;
        return v;
      }
      function areaToFt2(value, unit) {
        const v = parseFloat(value) || 0;
        if (unit === "ft2") return v;
        if (unit === "m2") return v * 10.7639;
        return v;
      }
      function applyWaste(base, wastePct) {
        const w = parseFloat(wastePct) || 0;
        return base * (1 + w / 100);
      }
      function formatMoney(x) {
        const n = Number(x) || 0;
        return "$" + n.toFixed(2);
      }

      // Quick: Concrete
      function calcConcrete() {
        const L = toFeet(
          document.getElementById("concrete-length").value,
          document.getElementById("concrete-length-unit").value
        );
        const W = toFeet(
          document.getElementById("concrete-width").value,
          document.getElementById("concrete-width-unit").value
        );
        const T = thicknessToFeet(
          document.getElementById("concrete-thickness").value,
          document.getElementById("concrete-thickness-unit").value
        );
        const waste = document.getElementById("concrete-waste").value;
        const price =
          parseFloat(document.getElementById("concrete-price").value) || 0;

        const volFt3 = L * W * T;
        const volYd3 = volFt3 / 27;
        const volYd3Adj = applyWaste(volYd3, waste);
        const cost = volYd3Adj * price;

        document.getElementById("concrete-volume-ft3").textContent =
          volFt3.toFixed(1);
        document.getElementById("concrete-volume-yd3").textContent =
          volYd3Adj.toFixed(2);
        document.getElementById("concrete-cost").textContent =
          formatMoney(cost);
        updateSummary();
      }
      document
        .getElementById("concrete-calc")
        .addEventListener("click", calcConcrete);
      [
        "concrete-length",
        "concrete-width",
        "concrete-thickness",
        "concrete-waste",
        "concrete-price",
        "concrete-length-unit",
        "concrete-width-unit",
        "concrete-thickness-unit",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", calcConcrete);
        document.getElementById(id).addEventListener("change", calcConcrete);
      });

      // Quick: Bulk (gravel/mulch)
      function calcBulk() {
        const A = areaToFt2(
          document.getElementById("bulk-area").value,
          document.getElementById("bulk-area-unit").value
        );
        const d = thicknessToFeet(
          document.getElementById("bulk-depth").value,
          document.getElementById("bulk-depth-unit").value
        );
        const waste = document.getElementById("bulk-waste").value;
        const price =
          parseFloat(document.getElementById("bulk-price").value) || 0;

        const volFt3 = A * d;
        const volYd3 = volFt3 / 27;
        const volYd3Adj = applyWaste(volYd3, waste);
        const cost = volYd3Adj * price;

        document.getElementById("bulk-volume-ft3").textContent =
          volFt3.toFixed(1);
        document.getElementById("bulk-volume-yd3").textContent =
          volYd3Adj.toFixed(2);
        document.getElementById("bulk-cost").textContent = formatMoney(cost);
        updateSummary();
      }
      document.getElementById("bulk-calc").addEventListener("click", calcBulk);
      [
        "bulk-area",
        "bulk-depth",
        "bulk-waste",
        "bulk-price",
        "bulk-area-unit",
        "bulk-depth-unit",
        "bulk-type",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", calcBulk);
        document.getElementById(id).addEventListener("change", calcBulk);
      });

      // Quick: Paint
      function calcPaint() {
        let area = parseFloat(document.getElementById("paint-area").value) || 0;
        const unit = document.getElementById("paint-area-unit").value;
        if (unit === "m2") area = area * 10.7639;
        const coats =
          parseFloat(document.getElementById("paint-coats").value) || 1;
        const coverage =
          parseFloat(document.getElementById("paint-coverage").value) || 350;
        const waste = document.getElementById("paint-waste").value;
        const price =
          parseFloat(document.getElementById("paint-price").value) || 0;

        const totalArea = area * coats;
        let gallons = totalArea / coverage;
        gallons = applyWaste(gallons, waste);
        const cost = gallons * price;

        document.getElementById("paint-gallons").textContent =
          gallons.toFixed(2);
        document.getElementById("paint-cost").textContent = formatMoney(cost);
        updateSummary();
      }
      document
        .getElementById("paint-calc")
        .addEventListener("click", calcPaint);
      [
        "paint-area",
        "paint-coats",
        "paint-coverage",
        "paint-waste",
        "paint-price",
        "paint-area-unit",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", calcPaint);
        document.getElementById(id).addEventListener("change", calcPaint);
      });

      // Detailed takeoff table
      const takeoffBody = document.getElementById("takeoff-body");
      let rowCounter = 0;

      function addRow(data = {}) {
        rowCounter += 1;
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";
        tr.innerHTML = `
      <td class="px-2 py-1 text-gray-500">${rowCounter}</td>
      <td class="px-2 py-1">
        <input type="text" class="w-40 md:w-56 border-gray-200 rounded-md text-xs px-1.5 py-1 takeoff-desc" placeholder="e.g. 4x8 drywall" value="${
          data.desc || ""
        }">
      </td>
      <td class="px-2 py-1">
        <input type="number" step="0.01" class="w-20 border-gray-200 rounded-md text-xs px-1.5 py-1 takeoff-qty" value="${
          data.qty || ""
        }">
      </td>
      <td class="px-2 py-1">
        <input type="text" class="w-16 border-gray-200 rounded-md text-xs px-1.5 py-1 takeoff-unit" value="${
          data.unit || ""
        }" placeholder="pcs">
      </td>
      <td class="px-2 py-1">
        <input type="number" step="1" class="w-16 border-gray-200 rounded-md text-xs px-1.5 py-1 takeoff-waste" value="${
          data.waste != null ? data.waste : 10
        }">
      </td>
      <td class="px-2 py-1">
        <div class="flex">
          <span class="inline-flex items-center px-1.5 border border-r-0 border-gray-200 rounded-l-md text-[10px] bg-gray-50">$</span>
          <input type="number" step="0.01" class="w-20 border-gray-200 rounded-r-md text-xs px-1.5 py-1 takeoff-price" value="${
            data.price || ""
          }">
        </div>
      </td>
      <td class="px-2 py-1 text-right">
        <span class="takeoff-total text-gray-800">$0.00</span>
      </td>
      <td class="px-2 py-1 text-right">
        <button type="button" class="text-red-500 hover:text-red-700 text-xs remove-row">✕</button>
      </td>
    `;
        takeoffBody.appendChild(tr);
        bindRowEvents(tr);
        updateTakeoffTotals();
      }

      function bindRowEvents(tr) {
        tr.querySelectorAll(
          ".takeoff-qty,.takeoff-waste,.takeoff-price"
        ).forEach((input) => {
          input.addEventListener("input", () => {
            updateRowTotal(tr);
            updateTakeoffTotals();
          });
        });
        const removeBtn = tr.querySelector(".remove-row");
        removeBtn.addEventListener("click", () => {
          tr.remove();
          updateTakeoffTotals();
        });
      }

      function updateRowTotal(tr) {
        const qty = parseFloat(tr.querySelector(".takeoff-qty").value) || 0;
        const waste = parseFloat(tr.querySelector(".takeoff-waste").value) || 0;
        const price = parseFloat(tr.querySelector(".takeoff-price").value) || 0;
        const qtyAdj = applyWaste(qty, waste);
        const total = qtyAdj * price;
        tr.querySelector(".takeoff-total").textContent = formatMoney(total);
      }

      function updateTakeoffTotals() {
        let subtotal = 0;
        takeoffBody.querySelectorAll("tr").forEach((tr) => {
          const qty = parseFloat(tr.querySelector(".takeoff-qty").value) || 0;
          const waste =
            parseFloat(tr.querySelector(".takeoff-waste").value) || 0;
          const price =
            parseFloat(tr.querySelector(".takeoff-price").value) || 0;
          const qtyAdj = applyWaste(qty, waste);
          subtotal += qtyAdj * price;
        });
        document.getElementById("takeoff-subtotal").textContent =
          formatMoney(subtotal);
        updateSummary();
      }

      document
        .getElementById("add-row")
        .addEventListener("click", () => addRow());
      document.getElementById("clear-rows").addEventListener("click", () => {
        takeoffBody.innerHTML = "";
        updateTakeoffTotals();
      });

      // Presets
      document.querySelectorAll(".preset-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const type = btn.getAttribute("data-preset");
          if (type === "drywall") {
            addRow({
              desc: "4x8 drywall sheet",
              qty: 20,
              unit: "sheet",
              waste: 10,
              price: 15,
            });
          } else if (type === "lumber") {
            addRow({
              desc: "2x4x8 stud",
              qty: 50,
              unit: "pcs",
              waste: 10,
              price: 4,
            });
          } else if (type === "tile") {
            addRow({
              desc: "Floor tile (per box)",
              qty: 10,
              unit: "box",
              waste: 12,
              price: 30,
            });
          }
        });
      });

      // Summary
      function getQuickSubtotal() {
        const concreteText =
          document.getElementById("concrete-cost").textContent || "$0";
        const bulkText =
          document.getElementById("bulk-cost").textContent || "$0";
        const paintText =
          document.getElementById("paint-cost").textContent || "$0";
        const c = parseFloat(concreteText.replace(/[^0-9.-]/g, "")) || 0;
        const b = parseFloat(bulkText.replace(/[^0-9.-]/g, "")) || 0;
        const p = parseFloat(paintText.replace(/[^0-9.-]/g, "")) || 0;
        return c + b + p;
      }

      function getTakeoffSubtotal() {
        const txt =
          document.getElementById("takeoff-subtotal").textContent || "$0";
        return parseFloat(txt.replace(/[^0-9.-]/g, "")) || 0;
      }

      function buildSummaryExport(
        materialsSubtotal,
        contingencyAmt,
        taxAmt,
        total
      ) {
        const name =
          document.getElementById("project-name").value || "Materials estimate";
        const lines = [];
        lines.push(name);
        lines.push("==============================");
        lines.push("");
        lines.push("Quick estimator:");
        lines.push(
          "  Concrete: " +
            (document.getElementById("concrete-cost").textContent || "$0.00")
        );
        lines.push(
          "  Gravel / Mulch: " +
            (document.getElementById("bulk-cost").textContent || "$0.00")
        );
        lines.push(
          "  Paint: " +
            (document.getElementById("paint-cost").textContent || "$0.00")
        );
        lines.push("");
        lines.push(
          "Detailed takeoff: " +
            (document.getElementById("takeoff-subtotal").textContent || "$0.00")
        );
        lines.push("");
        lines.push("Totals:");
        lines.push("  Materials subtotal: " + formatMoney(materialsSubtotal));
        lines.push("  Contingency: " + formatMoney(contingencyAmt));
        lines.push("  Tax: " + formatMoney(taxAmt));
        lines.push("  --------------------------");
        lines.push("  Estimated total: " + formatMoney(total));
        lines.push("");
        lines.push(
          "Generated with CalcDomain Materials Estimation Calculator."
        );
        return lines.join("\n");
      }

      function updateSummary() {
        const quick = getQuickSubtotal();
        const takeoff = getTakeoffSubtotal();
        const materialsSubtotal = quick + takeoff;

        const contingencyPct =
          parseFloat(document.getElementById("summary-contingency").value) || 0;
        const taxPct =
          parseFloat(document.getElementById("summary-tax").value) || 0;

        const contingencyAmt = materialsSubtotal * (contingencyPct / 100);
        const taxAmt = (materialsSubtotal + contingencyAmt) * (taxPct / 100);
        const total = materialsSubtotal + contingencyAmt + taxAmt;

        document.getElementById("summary-quick-subtotal").textContent =
          formatMoney(quick);
        document.getElementById("summary-takeoff-subtotal").textContent =
          formatMoney(takeoff);
        document.getElementById("summary-materials-subtotal").textContent =
          formatMoney(materialsSubtotal);
        document.getElementById("summary-contingency-amount").textContent =
          formatMoney(contingencyAmt);
        document.getElementById("summary-tax-amount").textContent =
          formatMoney(taxAmt);
        document.getElementById("summary-total").textContent =
          formatMoney(total);

        document.getElementById("summary-export").textContent =
          buildSummaryExport(materialsSubtotal, contingencyAmt, taxAmt, total);
      }

      document
        .getElementById("summary-refresh")
        .addEventListener("click", updateSummary);
      document
        .getElementById("summary-contingency")
        .addEventListener("input", updateSummary);
      document
        .getElementById("summary-tax")
        .addEventListener("input", updateSummary);
      document
        .getElementById("project-name")
        .addEventListener("input", updateSummary);

      document.getElementById("summary-copy").addEventListener("click", () => {
        const text = document.getElementById("summary-export").textContent;
        if (navigator.clipboard && window.isSecureContext) {
          navigator.clipboard
            .writeText(text)
            .then(() => {
              alert("Summary copied to clipboard.");
            })
            .catch(() => {
              alert("Unable to copy. Please select and copy manually.");
            });
        } else {
          const textarea = document.createElement("textarea");
          textarea.value = text;
          textarea.style.position = "fixed";
          textarea.style.left = "-9999px";
          document.body.appendChild(textarea);
          textarea.focus();
          textarea.select();
          try {
            document.execCommand("copy");
            alert("Summary copied to clipboard.");
          } catch (e) {
            alert("Unable to copy. Please select and copy manually.");
          }
          document.body.removeChild(textarea);
        }
      });

      // Initialize with one empty row and initial calculations
      addRow();
      calcConcrete();
      calcBulk();
      calcPaint();
      updateSummary();
    </script>

