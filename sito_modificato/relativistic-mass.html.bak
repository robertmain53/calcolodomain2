    <script>
      // Constants
      const C = 299792458; // speed of light in m/s

      function formatSci(value) {
        if (!isFinite(value) || isNaN(value)) return "—";
        const abs = Math.abs(value);
        if (abs === 0) return "0";
        if (abs >= 1e-3 && abs < 1e4) {
          return value.toPrecision(6).replace(/\.?0+$/, "");
        }
        const exp = value.toExponential(3);
        const parts = exp.split("e");
        const mant = parts[0];
        const pow = parseInt(parts[1], 10);
        return mant + "×10" + "<sup>" + pow + "</sup>";
      }

      function mevToJ(mev) {
        // 1 eV = 1.602176634e-19 J
        return mev * 1e6 * 1.602176634e-19;
      }

      function gevToJ(gev) {
        return gev * 1e9 * 1.602176634e-19;
      }

      function jToEv(j) {
        return j / 1.602176634e-19;
      }

      function computeFromInputs() {
        const restMassVal = parseFloat(
          document.getElementById("rest-mass-value").value
        );
        const restMassUnit = document.getElementById("rest-mass-unit").value;
        let beta = parseFloat(document.getElementById("velocity-beta").value);
        const vMsField = document.getElementById("velocity-ms");
        const errorMsg = document.getElementById("error-msg");
        errorMsg.classList.add("hidden");
        errorMsg.textContent = "";

        if (!(restMassVal > 0)) {
          errorMsg.textContent = "Please enter a positive rest mass.";
          errorMsg.classList.remove("hidden");
          return;
        }

        // Convert rest mass to kg
        let m0_kg;
        if (restMassUnit === "kg") {
          m0_kg = restMassVal;
        } else if (restMassUnit === "g") {
          m0_kg = restMassVal / 1000;
        } else if (restMassUnit === "MeV") {
          // E = m c^2 => m = E/c^2, with E in joules
          const E_J = mevToJ(restMassVal);
          m0_kg = E_J / (C * C);
        } else if (restMassUnit === "GeV") {
          const E_J = gevToJ(restMassVal);
          m0_kg = E_J / (C * C);
        }

        // Determine beta and v
        let v;
        if (beta > 0 && beta < 1) {
          v = beta * C;
          vMsField.value = v.toPrecision(6);
        } else {
          const vMs = parseFloat(vMsField.value);
          if (!(vMs >= 0)) {
            errorMsg.textContent =
              "Please enter a valid speed (as v/c or in m/s).";
            errorMsg.classList.remove("hidden");
            return;
          }
          if (vMs >= C) {
            errorMsg.textContent =
              "Speed must be less than the speed of light c.";
            errorMsg.classList.remove("hidden");
            return;
          }
          v = vMs;
          beta = v / C;
          document.getElementById("velocity-beta").value = beta.toPrecision(6);
        }

        // Lorentz factor
        const gamma = 1 / Math.sqrt(1 - beta * beta);

        // Relativistic mass
        const m_rel = gamma * m0_kg;

        // Energies
        const E_total = gamma * m0_kg * C * C;
        const E_rest = m0_kg * C * C;
        const K = E_total - E_rest;

        // Momentum
        const p = gamma * m0_kg * v;

        // Update outputs
        document.getElementById("gamma-output").textContent = gamma
          .toPrecision(6)
          .replace(/\.?0+$/, "");
        document.getElementById("rel-mass-kg").innerHTML =
          formatSci(m_rel) + " kg";

        const relMassEnergyUnits = document.getElementById(
          "rel-mass-energy-units"
        );
        relMassEnergyUnits.innerHTML =
          "= " +
          formatSci(m_rel) +
          " kg (equivalent to " +
          formatSci(m_rel * C * C) +
          " J/c²)";

        document.getElementById("energy-output").innerHTML =
          formatSci(E_total) + " J";
        document.getElementById("ke-output").innerHTML = formatSci(K) + " J";
        document.getElementById("momentum-output").innerHTML =
          formatSci(p) + " kg·m/s";

        const E_eV = jToEv(E_total);
        document.getElementById("energy-mev-output").innerHTML =
          "≈ " + formatSci(E_eV) + " eV";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const betaInput = document.getElementById("velocity-beta");
        const vMsInput = document.getElementById("velocity-ms");
        const gammaInput = document.getElementById("gamma-input");
        const applyGammaBtn = document.getElementById("apply-gamma");
        const useLightSpeedBtn = document.getElementById("use-light-speed");
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");

        // Initialize v from default beta
        vMsInput.value = (parseFloat(betaInput.value) * C).toPrecision(6);

        betaInput.addEventListener("input", () => {
          const beta = parseFloat(betaInput.value);
          const errorMsg = document.getElementById("error-msg");
          errorMsg.classList.add("hidden");
          if (!(beta >= 0) || beta >= 1) return;
          const v = beta * C;
          vMsInput.value = v.toPrecision(6);
        });

        vMsInput.addEventListener("input", () => {
          const v = parseFloat(vMsInput.value);
          const errorMsg = document.getElementById("error-msg");
          errorMsg.classList.add("hidden");
          if (!(v >= 0) || v >= C) return;
          const beta = v / C;
          betaInput.value = beta.toPrecision(6);
        });

        applyGammaBtn.addEventListener("click", () => {
          const gamma = parseFloat(gammaInput.value);
          const errorMsg = document.getElementById("error-msg");
          if (!(gamma >= 1)) {
            errorMsg.textContent = "γ must be ≥ 1.";
            errorMsg.classList.remove("hidden");
            return;
          }
          const beta = Math.sqrt(1 - 1 / (gamma * gamma));
          const v = beta * C;
          document.getElementById("velocity-beta").value = beta.toPrecision(6);
          document.getElementById("velocity-ms").value = v.toPrecision(6);
          errorMsg.classList.add("hidden");
        });

        useLightSpeedBtn.addEventListener("click", () => {
          const errorMsg = document.getElementById("error-msg");
          errorMsg.textContent =
            "Massive objects cannot reach exactly c. Try a value slightly below c, e.g. v/c = 0.9999.";
          errorMsg.classList.remove("hidden");
        });

        calcBtn.addEventListener("click", computeFromInputs);

        resetBtn.addEventListener("click", () => {
          document.getElementById("rest-mass-value").value = 1;
          document.getElementById("rest-mass-unit").value = "kg";
          document.getElementById("velocity-beta").value = 0.8;
          document.getElementById("velocity-ms").value = (0.8 * C).toPrecision(
            6
          );
          document.getElementById("gamma-input").value = "";
          document.getElementById("error-msg").classList.add("hidden");
          computeFromInputs();
        });

        // FAQ toggle (simple, in addition to global script_faq)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const symbol = btn.querySelector("span:last-child");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((s) => (s.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                symbol.textContent = "−";
              }
            });
          });

        // Initial computation
        computeFromInputs();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
