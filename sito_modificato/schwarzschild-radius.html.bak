    <script>
      (function () {
        const G = 6.6743e-11; // m^3 kg^-1 s^-2
        const C = 2.99792458e8; // m/s
        const SOLAR_MASS = 1.98847e30; // kg
        const EARTH_MASS = 5.9722e24; // kg
        const JUPITER_MASS = 1.89813e27; // kg
        const AU = 1.495978707e11; // m
        const LY = 9.4607304725808e15; // m

        const modeMassToRadiusBtn = document.getElementById(
          "mode-mass-to-radius"
        );
        const modeRadiusToMassBtn = document.getElementById(
          "mode-radius-to-mass"
        );
        const sectionMassToRadius = document.getElementById(
          "section-mass-to-radius"
        );
        const sectionRadiusToMass = document.getElementById(
          "section-radius-to-mass"
        );
        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorMessage = document.getElementById("error-message");
        const resultsContainer = document.getElementById("results-container");
        const resultsContent = document.getElementById("results-content");

        let currentMode = "mass-to-radius";

        function setMode(mode) {
          currentMode = mode;
          if (mode === "mass-to-radius") {
            sectionMassToRadius.classList.remove("hidden");
            sectionRadiusToMass.classList.add("hidden");
            modeMassToRadiusBtn.classList.add("toggle-active");
            modeRadiusToMassBtn.classList.remove("toggle-active");
            modeMassToRadiusBtn.setAttribute("aria-selected", "true");
            modeRadiusToMassBtn.setAttribute("aria-selected", "false");
          } else {
            sectionMassToRadius.classList.add("hidden");
            sectionRadiusToMass.classList.remove("hidden");
            modeMassToRadiusBtn.classList.remove("toggle-active");
            modeRadiusToMassBtn.classList.add("toggle-active");
            modeMassToRadiusBtn.setAttribute("aria-selected", "false");
            modeRadiusToMassBtn.setAttribute("aria-selected", "true");
          }
          clearError();
          hideResults();
        }

        function clearError() {
          errorMessage.textContent = "";
          errorMessage.classList.add("hidden");
        }

        function showError(msg) {
          errorMessage.textContent = msg;
          errorMessage.classList.remove("hidden");
          hideResults();
        }

        function hideResults() {
          resultsContainer.classList.add("hidden");
          resultsContent.innerHTML = "";
        }

        function formatNumber(value, decimals = 3) {
          if (!isFinite(value)) return "—";
          const abs = Math.abs(value);
          if (abs !== 0 && (abs < 1e-3 || abs >= 1e6)) {
            return value.toExponential(decimals);
          }
          return value.toFixed(decimals);
        }

        function calculateMassToRadius() {
          const massValue = parseFloat(
            document.getElementById("mass-value").value
          );
          const massUnit = document.getElementById("mass-unit").value;

          if (isNaN(massValue)) {
            showError("Please enter a valid mass value.");
            return;
          }
          if (massValue <= 0) {
            showError("Mass must be greater than zero.");
            return;
          }

          let massKg;
          switch (massUnit) {
            case "kg":
              massKg = massValue;
              break;
            case "solar":
              massKg = massValue * SOLAR_MASS;
              break;
            case "earth":
              massKg = massValue * EARTH_MASS;
              break;
            case "jupiter":
              massKg = massValue * JUPITER_MASS;
              break;
            default:
              massKg = massValue;
          }

          const Rs_m = (2 * G * massKg) / (C * C);
          const Rs_km = Rs_m / 1000;
          const Rs_AU = Rs_m / AU;
          const Rs_ly = Rs_m / LY;

          clearError();
          resultsContainer.classList.remove("hidden");

          const massSolar = massKg / SOLAR_MASS;
          const massEarth = massKg / EARTH_MASS;
          const massJupiter = massKg / JUPITER_MASS;

          resultsContent.innerHTML = `
      <div class="grid md:grid-cols-2 gap-4">
        <div class="bg-blue-50 border border-blue-100 rounded-md p-3">
          <p class="font-semibold mb-1">Schwarzschild radius</p>
          <p><span class="font-mono">${formatNumber(Rs_m, 3)}</span> m</p>
          <p><span class="font-mono">${formatNumber(Rs_km, 3)}</span> km</p>
          <p><span class="font-mono">${formatNumber(Rs_AU, 6)}</span> AU</p>
          <p><span class="font-mono">${formatNumber(Rs_ly, 9)}</span> ly</p>
        </div>
        <div class="bg-gray-50 border border-gray-200 rounded-md p-3">
          <p class="font-semibold mb-1">Mass (converted)</p>
          <p><span class="font-mono">${formatNumber(massKg, 3)}</span> kg</p>
          <p><span class="font-mono">${formatNumber(
            massSolar,
            6
          )}</span> M☉ (solar masses)</p>
          <p><span class="font-mono">${formatNumber(
            massEarth,
            6
          )}</span> M⊕ (Earth masses)</p>
          <p><span class="font-mono">${formatNumber(
            massJupiter,
            6
          )}</span> M♃ (Jupiter masses)</p>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">
        Computed using \( R_s = 2GM / c^2 \) with CODATA 2018 constants.
      </p>
    `;
        }

        function calculateRadiusToMass() {
          const radiusValue = parseFloat(
            document.getElementById("radius-value").value
          );
          const radiusUnit = document.getElementById("radius-unit").value;

          if (isNaN(radiusValue)) {
            showError("Please enter a valid radius value.");
            return;
          }
          if (radiusValue <= 0) {
            showError("Radius must be greater than zero.");
            return;
          }

          let Rs_m;
          switch (radiusUnit) {
            case "m":
              Rs_m = radiusValue;
              break;
            case "km":
              Rs_m = radiusValue * 1000;
              break;
            case "au":
              Rs_m = radiusValue * AU;
              break;
            case "ly":
              Rs_m = radiusValue * LY;
              break;
            default:
              Rs_m = radiusValue;
          }

          const massKg = (Rs_m * C * C) / (2 * G);
          const massSolar = massKg / SOLAR_MASS;
          const massEarth = massKg / EARTH_MASS;
          const massJupiter = massKg / JUPITER_MASS;

          clearError();
          resultsContainer.classList.remove("hidden");

          const Rs_km = Rs_m / 1000;
          const Rs_AU = Rs_m / AU;
          const Rs_ly = Rs_m / LY;

          resultsContent.innerHTML = `
      <div class="grid md:grid-cols-2 gap-4">
        <div class="bg-blue-50 border border-blue-100 rounded-md p-3">
          <p class="font-semibold mb-1">Mass corresponding to this Schwarzschild radius</p>
          <p><span class="font-mono">${formatNumber(massKg, 3)}</span> kg</p>
          <p><span class="font-mono">${formatNumber(
            massSolar,
            6
          )}</span> M☉ (solar masses)</p>
          <p><span class="font-mono">${formatNumber(
            massEarth,
            6
          )}</span> M⊕ (Earth masses)</p>
          <p><span class="font-mono">${formatNumber(
            massJupiter,
            6
          )}</span> M♃ (Jupiter masses)</p>
        </div>
        <div class="bg-gray-50 border border-gray-200 rounded-md p-3">
          <p class="font-semibold mb-1">Radius (converted)</p>
          <p><span class="font-mono">${formatNumber(Rs_m, 3)}</span> m</p>
          <p><span class="font-mono">${formatNumber(Rs_km, 3)}</span> km</p>
          <p><span class="font-mono">${formatNumber(Rs_AU, 6)}</span> AU</p>
          <p><span class="font-mono">${formatNumber(Rs_ly, 9)}</span> ly</p>
        </div>
      </div>
      <p class="text-xs text-gray-500 mt-2">
        Computed using \( M = R_s c^2 / (2G) \) with CODATA 2018 constants.
      </p>
    `;
        }

        function handleCalculate() {
          if (currentMode === "mass-to-radius") {
            calculateMassToRadius();
          } else {
            calculateRadiusToMass();
          }
        }

        function handleReset() {
          document.getElementById("mass-value").value = 1;
          document.getElementById("mass-unit").value = "solar";
          document.getElementById("radius-value").value = "";
          document.getElementById("radius-unit").value = "km";
          clearError();
          hideResults();
        }

        modeMassToRadiusBtn.addEventListener("click", () =>
          setMode("mass-to-radius")
        );
        modeRadiusToMassBtn.addEventListener("click", () =>
          setMode("radius-to-mass")
        );
        calculateBtn.addEventListener("click", handleCalculate);
        resetBtn.addEventListener("click", handleReset);

        document
          .getElementById("schwarzschild-form")
          .addEventListener("submit", function (e) {
            e.preventDefault();
            handleCalculate();
          });

        // Initialize default mode
        setMode("mass-to-radius");
      })();
    </script>
  
