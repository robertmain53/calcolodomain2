    <script>
      // Simple illustrative rate data (NOT authoritative)
      const GA_LOCATIONS = [
        { name: "Atlanta (Fulton County)", stateRate: 4.0, localRate: 4.9 },
        { name: "Savannah (Chatham County)", stateRate: 4.0, localRate: 3.0 },
        { name: "Columbus (Muscogee County)", stateRate: 4.0, localRate: 3.0 },
        { name: "Augusta (Richmond County)", stateRate: 4.0, localRate: 3.0 },
        { name: "Macon (Bibb County)", stateRate: 4.0, localRate: 3.0 },
        { name: "Albany (Dougherty County)", stateRate: 4.0, localRate: 3.0 },
        { name: "Athens-Clarke County", stateRate: 4.0, localRate: 4.0 },
      ];

      function formatMoney(value) {
        if (!isFinite(value)) return "$0.00";
        return "$" + value.toFixed(2);
      }

      function recalc() {
        const amount =
          parseFloat(document.getElementById("taxable-amount").value) || 0;
        const stateRate =
          parseFloat(document.getElementById("state-rate").value) || 0;
        const localRate =
          parseFloat(document.getElementById("local-rate").value) || 0;

        const stateTax = amount * (stateRate / 100);
        const localTax = amount * (localRate / 100);
        const totalTax = stateTax + localTax;
        const totalWithTax = amount + totalTax;

        document.getElementById("state-tax").textContent =
          formatMoney(stateTax);
        document.getElementById("local-tax").textContent =
          formatMoney(localTax);
        document.getElementById("total-tax").textContent =
          formatMoney(totalTax);
        document.getElementById("total-with-tax").textContent =
          formatMoney(totalWithTax);

        const showBreakdown = document.getElementById(
          "include-special-purpose"
        ).checked;
        const breakdownEl = document.getElementById(
          "special-purpose-breakdown"
        );
        if (showBreakdown && localRate > 0 && amount > 0) {
          breakdownEl.classList.remove("hidden");
          // Simple illustrative split: LOST 1%, SPLOST 1%, ESPLOST 1%, TSPLOST = remainder (if any)
          const lostRate = Math.min(1, localRate);
          const splostRate = Math.min(1, Math.max(localRate - lostRate, 0));
          const esplostRate = Math.min(
            1,
            Math.max(localRate - lostRate - splostRate, 0)
          );
          const tsplostRate = Math.max(
            localRate - lostRate - splostRate - esplostRate,
            0
          );

          document.getElementById("lost-tax").textContent = formatMoney(
            amount * (lostRate / 100)
          );
          document.getElementById("splost-tax").textContent = formatMoney(
            amount * (splostRate / 100)
          );
          document.getElementById("esplost-tax").textContent = formatMoney(
            amount * (esplostRate / 100)
          );
          document.getElementById("tsplost-tax").textContent = formatMoney(
            amount * (tsplostRate / 100)
          );
        } else {
          breakdownEl.classList.add("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const locationSelect = document.getElementById("location-select");
        GA_LOCATIONS.forEach((loc) => {
          const opt = document.createElement("option");
          opt.value = loc.name;
          opt.textContent = `${loc.name} (approx. ${(
            loc.stateRate + loc.localRate
          ).toFixed(2)}%)`;
          opt.dataset.stateRate = loc.stateRate;
          opt.dataset.localRate = loc.localRate;
          locationSelect.appendChild(opt);
        });

        locationSelect.addEventListener("change", (e) => {
          const selected = e.target.selectedOptions[0];
          if (selected && selected.dataset.stateRate) {
            document.getElementById("state-rate").value =
              selected.dataset.stateRate;
            document.getElementById("local-rate").value =
              selected.dataset.localRate;
            recalc();
          }
        });

        document.getElementById("calc-btn").addEventListener("click", (e) => {
          e.preventDefault();
          recalc();
        });

        [
          "taxable-amount",
          "state-rate",
          "local-rate",
          "include-special-purpose",
        ].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("input", recalc);
          el.addEventListener("change", recalc);
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
