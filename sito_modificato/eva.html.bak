    <script>
      // Mode toggle
      const modeSimpleBtn = document.getElementById("mode-simple");
      const modeDetailedBtn = document.getElementById("mode-detailed");
      const simpleSection = document.getElementById("simple-section");
      const detailedSection = document.getElementById("detailed-section");

      modeSimpleBtn.addEventListener("click", () => {
        modeSimpleBtn.classList.remove(
          "border-gray-300",
          "text-gray-700",
          "bg-white"
        );
        modeSimpleBtn.classList.add(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeDetailedBtn.classList.remove(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeDetailedBtn.classList.add(
          "border-gray-300",
          "text-gray-700",
          "bg-white"
        );
        simpleSection.classList.remove("hidden");
        detailedSection.classList.add("hidden");
      });

      modeDetailedBtn.addEventListener("click", () => {
        modeDetailedBtn.classList.remove(
          "border-gray-300",
          "text-gray-700",
          "bg-white"
        );
        modeDetailedBtn.classList.add(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeSimpleBtn.classList.remove(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeSimpleBtn.classList.add(
          "border-gray-300",
          "text-gray-700",
          "bg-white"
        );
        detailedSection.classList.remove("hidden");
        simpleSection.classList.add("hidden");
      });

      function formatCurrency(value) {
        if (isNaN(value)) return "-";
        const abs = Math.abs(value);
        let formatted = value.toFixed(2);
        if (abs >= 1e9) {
          formatted = (value / 1e9).toFixed(2) + " B";
        } else if (abs >= 1e6) {
          formatted = (value / 1e6).toFixed(2) + " M";
        } else if (abs >= 1e3) {
          formatted = (value / 1e3).toFixed(2) + " K";
        }
        return formatted;
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const usingSimple = !simpleSection.classList.contains("hidden");

        let nopat, capital, waccDecimal;

        if (usingSimple) {
          const simpleNOPAT = parseFloat(
            document.getElementById("simple-nopat").value
          );
          const simpleCapital = parseFloat(
            document.getElementById("simple-capital").value
          );
          const simpleWacc = parseFloat(
            document.getElementById("simple-wacc").value
          );

          if (isNaN(simpleNOPAT) || isNaN(simpleCapital) || isNaN(simpleWacc)) {
            alert(
              "Please enter NOPAT, invested capital, and WACC in simple mode."
            );
            return;
          }

          nopat = simpleNOPAT;
          capital = simpleCapital;
          waccDecimal = simpleWacc / 100;
        } else {
          const ebit = parseFloat(document.getElementById("ebit").value);
          const taxRate = parseFloat(document.getElementById("tax-rate").value);
          const equity = parseFloat(document.getElementById("equity").value);
          const debt = parseFloat(document.getElementById("debt").value);
          const costEquity = parseFloat(
            document.getElementById("cost-equity").value
          );
          const costDebt = parseFloat(
            document.getElementById("cost-debt").value
          );

          if (
            [ebit, taxRate, equity, debt, costEquity, costDebt].some((v) =>
              isNaN(v)
            )
          ) {
            alert(
              "Please fill in EBIT, tax rate, equity, debt, cost of equity, and cost of debt in detailed mode."
            );
            return;
          }

          const taxRateDec = taxRate / 100;
          nopat = ebit * (1 - taxRateDec);
          capital = equity + debt;

          if (capital <= 0) {
            alert("Equity + debt must be greater than zero.");
            return;
          }

          const weightEquity = equity / capital;
          const weightDebt = debt / capital;
          const re = costEquity / 100;
          const rd = costDebt / 100;

          waccDecimal = weightEquity * re + weightDebt * rd * (1 - taxRateDec);
        }

        const capitalCharge = capital * waccDecimal;
        const eva = nopat - capitalCharge;

        document.getElementById("result-nopat").textContent =
          formatCurrency(nopat);
        document.getElementById("result-capital").textContent =
          formatCurrency(capital);
        document.getElementById("result-wacc").textContent =
          (waccDecimal * 100).toFixed(2) + " %";
        document.getElementById("result-capital-charge").textContent =
          formatCurrency(capitalCharge);
        document.getElementById("result-eva").textContent = formatCurrency(eva);

        const badge = document.getElementById("eva-badge");
        badge.className = "result-badge ml-2";
        if (eva > 0) {
          badge.classList.add("bg-green-100", "text-green-800");
          badge.textContent = "Value creating";
        } else if (Math.abs(eva) < 1e-6) {
          badge.classList.add("bg-yellow-100", "text-yellow-800");
          badge.textContent = "Break-even";
        } else {
          badge.classList.add("bg-red-100", "text-red-800");
          badge.textContent = "Value destroying";
        }

        document.getElementById("results-container").classList.remove("hidden");
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document
          .querySelectorAll('input[type="number"]')
          .forEach((inp) => (inp.value = ""));
        document.getElementById("results-container").classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
