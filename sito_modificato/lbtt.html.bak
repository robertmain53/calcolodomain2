    <script>
      // --- LBTT bands configuration (illustrative, keep easy to update) ---
      const LBTT_CONFIG = {
        residential: {
          standard: [
            { upTo: 145000, rate: 0.0 },
            { upTo: 250000, rate: 0.02 },
            { upTo: 325000, rate: 0.05 },
            { upTo: 750000, rate: 0.1 },
            { upTo: Infinity, rate: 0.12 },
          ],
          // First-time buyer relief modelled as extended nil-rate band
          ftb: [
            { upTo: 175000, rate: 0.0 },
            { upTo: 250000, rate: 0.02 },
            { upTo: 325000, rate: 0.05 },
            { upTo: 750000, rate: 0.1 },
            { upTo: Infinity, rate: 0.12 },
          ],
        },
        nonresidential: [
          { upTo: 150000, rate: 0.0 },
          { upTo: 250000, rate: 0.01 },
          { upTo: Infinity, rate: 0.05 },
        ],
        // ADS rate – update if Scottish Government changes it
        adsRate: 0.06,
      };

      function formatGBP(value) {
        if (!isFinite(value)) return "£0";
        return (
          "£" +
          value.toLocaleString("en-GB", {
            minimumFractionDigits: 0,
            maximumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0.00%";
        return value.toFixed(2) + "%";
      }

      function calculateSliceTax(price, bands) {
        let remaining = price;
        let lower = 0;
        const breakdown = [];
        let total = 0;

        for (const band of bands) {
          if (remaining <= 0) {
            breakdown.push({
              bandLabel: `£${lower.toLocaleString()} – £${
                band.upTo === Infinity ? "∞" : band.upTo.toLocaleString()
              }`,
              slice: 0,
              rate: band.rate,
              tax: 0,
            });
            lower = band.upTo;
            continue;
          }
          const upper = band.upTo;
          const taxableInBand = Math.max(0, Math.min(price, upper) - lower);
          const tax = taxableInBand * band.rate;
          total += tax;

          breakdown.push({
            bandLabel: `£${lower.toLocaleString()} – £${
              upper === Infinity ? "∞" : upper.toLocaleString()
            }`,
            slice: taxableInBand,
            rate: band.rate,
            tax,
          });

          remaining -= taxableInBand;
          lower = upper;
        }

        return { total, breakdown };
      }

      function getSelectedPropertyType() {
        const activeBtn = document.querySelector(
          ".property-type-btn.border-blue-600"
        );
        return activeBtn ? activeBtn.dataset.propertyType : "residential";
      }

      function getSelectedBuyerStatus() {
        const checked = document.querySelector(
          'input[name="buyerStatus"]:checked'
        );
        return checked ? checked.value : "standard";
      }

      function getSelectedADS() {
        const checked = document.querySelector('input[name="ads"]:checked');
        return checked ? checked.value : "no";
      }

      function updatePropertyTypeUI(type) {
        document.querySelectorAll(".property-type-btn").forEach((btn) => {
          if (btn.dataset.propertyType === type) {
            btn.classList.remove(
              "border-gray-300",
              "bg-white",
              "text-gray-700"
            );
            btn.classList.add("border-blue-600", "bg-blue-50", "text-blue-700");
          } else {
            btn.classList.remove(
              "border-blue-600",
              "bg-blue-50",
              "text-blue-700"
            );
            btn.classList.add("border-gray-300", "bg-white", "text-gray-700");
          }
        });

        const residentialOptions =
          document.getElementById("residentialOptions");
        if (type === "residential") {
          residentialOptions.classList.remove("opacity-50");
          residentialOptions.classList.remove("pointer-events-none");
        } else {
          residentialOptions.classList.add("opacity-50");
          residentialOptions.classList.add("pointer-events-none");
        }
      }

      function renderBandsTable(breakdown) {
        const tbody = document.getElementById("bandsTableBody");
        tbody.innerHTML = "";

        breakdown.forEach((row) => {
          const tr = document.createElement("tr");
          if (row.slice > 0 && row.rate > 0) {
            tr.classList.add("band-row-highlight");
          }
          tr.innerHTML = `
        <td class="px-3 py-2 border-b border-gray-200 whitespace-nowrap">${
          row.bandLabel
        }</td>
        <td class="px-3 py-2 border-b border-gray-200 text-right">${row.slice.toLocaleString(
          "en-GB",
          { maximumFractionDigits: 0 }
        )}</td>
        <td class="px-3 py-2 border-b border-gray-200 text-right">${(
          row.rate * 100
        ).toFixed(2)}%</td>
        <td class="px-3 py-2 border-b border-gray-200 text-right">${row.tax.toLocaleString(
          "en-GB",
          { minimumFractionDigits: 0, maximumFractionDigits: 2 }
        )}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function calculateLBTT() {
        const priceInput = document.getElementById("propertyPrice");
        const price = parseFloat(priceInput.value);

        if (isNaN(price) || price <= 0) {
          alert("Please enter a valid property price greater than 0.");
          return;
        }

        const propertyType = getSelectedPropertyType();
        const buyerStatus = getSelectedBuyerStatus();
        const adsSelection = getSelectedADS();

        let bands;
        if (propertyType === "residential") {
          bands =
            buyerStatus === "ftb"
              ? LBTT_CONFIG.residential.ftb
              : LBTT_CONFIG.residential.standard;
        } else {
          bands = LBTT_CONFIG.nonresidential;
        }

        const { total: lbttTotal, breakdown } = calculateSliceTax(price, bands);

        let adsAmount = 0;
        if (propertyType === "residential" && adsSelection === "yes") {
          adsAmount = price * LBTT_CONFIG.adsRate;
        }

        const totalTax = lbttTotal + adsAmount;
        const effectiveRate = (totalTax / price) * 100;

        document.getElementById("lbttAmount").textContent =
          formatGBP(lbttTotal);
        document.getElementById("adsAmount").textContent = formatGBP(adsAmount);
        document.getElementById("totalTax").textContent = formatGBP(totalTax);
        document.getElementById(
          "effectiveRate"
        ).textContent = `Effective tax rate: ${formatPercent(
          effectiveRate
        )} of the purchase price.`;

        renderBandsTable(breakdown);
        document.getElementById("lbttResults").classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        // Property type toggle
        document.querySelectorAll(".property-type-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            updatePropertyTypeUI(btn.dataset.propertyType);
          });
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateLBTT);

        // Allow Enter key on price input to trigger calculation
        document
          .getElementById("propertyPrice")
          .addEventListener("keydown", (e) => {
            if (e.key === "Enter") {
              e.preventDefault();
              calculateLBTT();
            }
          });

        // Initial UI state
        updatePropertyTypeUI("residential");
        calculateLBTT();
      });

      // Mobile menu script (simple)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
