    <script>
      // Core calculation logic
      function calculateEquipmentFinancing() {
        const cost =
          parseFloat(document.getElementById("equipmentCost").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const tradeIn =
          parseFloat(document.getElementById("tradeIn").value) || 0;
        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const years =
          parseFloat(document.getElementById("termYears").value) || 0;
        const freq =
          parseInt(document.getElementById("paymentFrequency").value, 10) || 12;
        const balloon =
          parseFloat(document.getElementById("balloonAmount").value) || 0;
        const showSchedule =
          document.getElementById("showScheduleToggle").checked;

        const amountFinanced = Math.max(cost - down - tradeIn, 0);
        const n = Math.max(Math.round(years * freq), 1);
        const r = rate / 100 / freq;

        const resultStatus = document.getElementById("resultStatus");

        if (amountFinanced <= 0 || years <= 0) {
          updateResults(0, amountFinanced, 0, 0, balloon, null);
          resultStatus.textContent =
            "Enter a positive amount financed and term.";
          document.getElementById("detailsSection").classList.add("hidden");
          return;
        }

        let payment = 0;
        if (r === 0) {
          // Zero interest: principal minus balloon spread evenly
          payment = (amountFinanced - balloon) / n;
        } else {
          // Payment formula with optional balloon
          const factor = Math.pow(1 + r, n);
          payment =
            (amountFinanced - balloon / factor) * (r / (1 - 1 / factor));
        }

        // Build amortization schedule
        let balance = amountFinanced;
        let totalInterest = 0;
        const schedule = [];
        for (let i = 1; i <= n; i++) {
          let interestPortion = balance * r;
          let principalPortion = payment - interestPortion;

          if (i === n && balloon > 0) {
            // Last period: leave balloon as remaining balance
            const targetBalance = balloon;
            principalPortion = balance - targetBalance;
            payment = principalPortion + interestPortion;
          }

          // Guard against tiny rounding negatives
          if (principalPortion > balance) {
            principalPortion = balance;
            payment = principalPortion + interestPortion;
          }

          balance -= principalPortion;
          totalInterest += interestPortion;

          schedule.push({
            period: i,
            payment,
            principal: principalPortion,
            interest: interestPortion,
            balance: Math.max(balance, 0),
          });
        }

        const totalPaid =
          schedule.reduce((sum, p) => sum + p.payment, 0) + balloon;
        updateResults(
          payment,
          amountFinanced,
          totalInterest,
          totalPaid,
          balloon,
          schedule
        );
        resultStatus.textContent = `Based on ${
          freq === 12 ? "monthly" : freq === 4 ? "quarterly" : "annual"
        } payments.`;
        document
          .getElementById("detailsSection")
          .classList.toggle("hidden", !showSchedule);
      }

      function formatCurrency(value) {
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function formatPercent(value) {
        return (
          value.toLocaleString(undefined, { maximumFractionDigits: 1 }) + "%"
        );
      }

      function updateResults(
        payment,
        amountFinanced,
        totalInterest,
        totalPaid,
        balloon,
        schedule
      ) {
        const freqSelect = document.getElementById("paymentFrequency");
        const freq = parseInt(freqSelect.value, 10) || 12;
        const freqLabel =
          freq === 12 ? "per month" : freq === 4 ? "per quarter" : "per year";

        document.getElementById("paymentAmount").textContent = formatCurrency(
          isFinite(payment) ? Math.max(payment, 0) : 0
        );
        document.getElementById("paymentFrequencyLabel").textContent =
          freqLabel;
        document.getElementById("amountFinanced").textContent =
          formatCurrency(amountFinanced);
        document.getElementById("totalInterest").textContent = formatCurrency(
          Math.max(totalInterest, 0)
        );
        document.getElementById("totalCost").textContent = formatCurrency(
          Math.max(totalPaid, 0)
        );
        document.getElementById("balloonResult").textContent = formatCurrency(
          Math.max(balloon, 0)
        );

        // Principal vs interest bar
        const principalTotal = amountFinanced;
        const interestTotal = Math.max(totalInterest, 0);
        const sum = principalTotal + interestTotal;
        let principalPct = 0,
          interestPct = 0;
        if (sum > 0) {
          principalPct = (principalTotal / sum) * 100;
          interestPct = (interestTotal / sum) * 100;
        }
        document.getElementById("principalBar").style.width =
          principalPct + "%";
        document.getElementById("interestBar").style.width = interestPct + "%";
        document.getElementById(
          "principalPercent"
        ).textContent = `Principal ${principalPct.toFixed(1)}%`;
        document.getElementById(
          "interestPercent"
        ).textContent = `Interest ${interestPct.toFixed(1)}%`;

        // Payoff date estimate
        const payoffEl = document.getElementById("payoffDate");
        if (schedule && schedule.length > 0) {
          const now = new Date();
          const periods = schedule.length;
          let monthsToAdd = 0;
          if (freq === 12) monthsToAdd = periods;
          else if (freq === 4) monthsToAdd = periods * 3;
          else if (freq === 1) monthsToAdd = periods * 12;
          const payoffDate = new Date(
            now.getFullYear(),
            now.getMonth() + monthsToAdd,
            now.getDate()
          );
          payoffEl.textContent = payoffDate.toLocaleDateString(undefined, {
            year: "numeric",
            month: "short",
          });
        } else {
          payoffEl.textContent = "–";
        }

        // Summary & schedule
        const detailsSection = document.getElementById("detailsSection");
        if (!schedule || schedule.length === 0) {
          detailsSection.classList.add("hidden");
          return;
        }

        const summaryList = document.getElementById("summaryList");
        summaryList.innerHTML = "";

        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const years =
          parseFloat(document.getElementById("termYears").value) || 0;
        const cost =
          parseFloat(document.getElementById("equipmentCost").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const tradeIn =
          parseFloat(document.getElementById("tradeIn").value) || 0;

        const items = [
          `Equipment cost: ${formatCurrency(cost)}`,
          `Down payment: ${formatCurrency(down)}; Trade-in: ${formatCurrency(
            tradeIn
          )}`,
          `Amount financed: ${formatCurrency(amountFinanced)}`,
          `Interest rate: ${rate.toFixed(2)}% APR; Term: ${years.toFixed(
            1
          )} years (${schedule.length} payments)`,
          `Regular payment: ${formatCurrency(Math.max(payment, 0))} ${
            freq === 12 ? "per month" : freq === 4 ? "per quarter" : "per year"
          }`,
          `Total interest over term: ${formatCurrency(
            Math.max(totalInterest, 0)
          )}`,
          `Balloon at maturity: ${formatCurrency(Math.max(balloon, 0))}`,
          `Total cost of financing (principal + interest + balloon): ${formatCurrency(
            Math.max(totalPaid, 0)
          )}`,
        ];

        items.forEach((text) => {
          const li = document.createElement("li");
          li.textContent = text;
          summaryList.appendChild(li);
        });

        const tbody = document.getElementById("amortizationBody");
        tbody.innerHTML = "";
        schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="text-left text-xs text-gray-700">${row.period}</td>
        <td class="text-right text-xs text-gray-700">${formatCurrency(
          row.payment
        )}</td>
        <td class="text-right text-xs text-gray-700">${formatCurrency(
          row.principal
        )}</td>
        <td class="text-right text-xs text-gray-700">${formatCurrency(
          row.interest
        )}</td>
        <td class="text-right text-xs text-gray-700">${formatCurrency(
          row.balance
        )}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calcBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const showScheduleToggle =
          document.getElementById("showScheduleToggle");

        calcBtn.addEventListener("click", calculateEquipmentFinancing);
        showScheduleToggle.addEventListener("change", () => {
          const detailsSection = document.getElementById("detailsSection");
          if (
            showScheduleToggle.checked &&
            document.getElementById("amortizationBody").children.length > 0
          ) {
            detailsSection.classList.remove("hidden");
          } else {
            detailsSection.classList.add("hidden");
          }
        });

        resetBtn.addEventListener("click", () => {
          document.getElementById("equipmentCost").value = 75000;
          document.getElementById("downPayment").value = 15000;
          document.getElementById("tradeIn").value = 0;
          document.getElementById("interestRate").value = 7.5;
          document.getElementById("termYears").value = 5;
          document.getElementById("paymentFrequency").value = 12;
          document.getElementById("balloonAmount").value = 0;
          document.getElementById("showScheduleToggle").checked = false;
          document.getElementById("detailsSection").classList.add("hidden");
          calculateEquipmentFinancing();
        });

        // Tabs
        const tabSummary = document.getElementById("tabSummary");
        const tabSchedule = document.getElementById("tabSchedule");
        const summaryPanel = document.getElementById("summaryPanel");
        const schedulePanel = document.getElementById("schedulePanel");

        function activateTab(tab) {
          if (tab === "summary") {
            tabSummary.classList.add("tab-button-active");
            tabSchedule.classList.remove("tab-button-active");
            summaryPanel.classList.remove("hidden");
            schedulePanel.classList.add("hidden");
          } else {
            tabSchedule.classList.add("tab-button-active");
            tabSummary.classList.remove("tab-button-active");
            schedulePanel.classList.remove("hidden");
            summaryPanel.classList.add("hidden");
          }
        }

        tabSummary.addEventListener("click", () => activateTab("summary"));
        tabSchedule.addEventListener("click", () => activateTab("schedule"));

        // Initial calculation
        calculateEquipmentFinancing();
      });

      // Mobile menu script (from template)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
