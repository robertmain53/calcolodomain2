    <script>
      // Utility: normalize input to digits only
      function digitsOnly(str) {
        return (str || "").replace(/\\D+/g, "");
      }

      function luhnChecksum(numberStr) {
        const digits = numberStr.split("").map((d) => parseInt(d, 10));
        let sum = 0;
        let steps = [];
        for (let i = digits.length - 1, pos = 1; i >= 0; i--, pos++) {
          let d = digits[i];
          let original = d;
          let doubled = false;
          if (pos % 2 === 0) {
            d *= 2;
            doubled = true;
            if (d > 9) d -= 9;
          }
          sum += d;
          steps.unshift({
            index: i,
            original,
            doubled,
            value: d,
          });
        }
        return { sum, steps };
      }

      function isLuhnValid(numberStr) {
        const clean = digitsOnly(numberStr);
        if (!clean) return false;
        const { sum } = luhnChecksum(clean);
        return sum % 10 === 0;
      }

      function calculateCheckDigit(numberWithoutCheck) {
        const clean = digitsOnly(numberWithoutCheck);
        if (!clean) return null;
        const { sum } = luhnChecksum(clean + "0"); // temporary 0 as check digit
        const mod = sum % 10;
        return (10 - mod) % 10;
      }

      function generateLuhnNumber(prefix, length) {
        const cleanPrefix = digitsOnly(prefix);
        const totalLength = Math.max(8, Math.min(25, length || 16));
        const bodyLength = totalLength - 1;
        let base = cleanPrefix.slice(0, bodyLength);
        while (base.length < bodyLength) {
          base += Math.floor(Math.random() * 10).toString();
        }
        const checkDigit = calculateCheckDigit(base);
        return base + checkDigit.toString();
      }

      function formatGroups(str) {
        return str.replace(/(.{4})/g, "$1 ").trim();
      }

      document.addEventListener("DOMContentLoaded", function () {
        const input = document.getElementById("card-input");
        const resultEl = document.getElementById("validation-result");
        const stepContainer = document.getElementById("step-by-step");
        const stepDigitsEl = document.getElementById("step-digits");
        const stepSumEl = document.getElementById("step-sum");

        function showSteps(clean) {
          const { sum, steps } = luhnChecksum(clean);
          const parts = steps.map((s, idx) => {
            const cls = s.doubled ? "bg-yellow-100 text-yellow-900" : "";
            return '<span class="px-1 ' + cls + '">' + s.value + "</span>";
          });
          stepDigitsEl.innerHTML = parts.join(" ");
          stepSumEl.textContent =
            "Sum of digits = " +
            sum +
            " → " +
            (sum % 10 === 0
              ? "sum mod 10 = 0 (valid)"
              : "sum mod 10 ≠ 0 (invalid)");
          stepContainer.classList.remove("hidden");
        }

        document
          .getElementById("btn-validate")
          .addEventListener("click", function () {
            const clean = digitsOnly(input.value);
            if (!clean) {
              resultEl.textContent = "Please enter at least one digit.";
              resultEl.className = "mt-3 text-sm font-medium text-red-600";
              stepContainer.classList.add("hidden");
              return;
            }
            const valid = isLuhnValid(clean);
            if (valid) {
              resultEl.innerHTML =
                '<span class="badge bg-emerald-100 text-emerald-800 border border-emerald-200 mr-2">Valid</span>' +
                "This number passes the Luhn checksum.";
              resultEl.className = "mt-3 text-sm font-medium text-emerald-700";
            } else {
              resultEl.innerHTML =
                '<span class="badge bg-red-100 text-red-800 border border-red-200 mr-2">Invalid</span>' +
                "The checksum does not match. One or more digits are likely mistyped.";
              resultEl.className = "mt-3 text-sm font-medium text-red-700";
            }
            showSteps(clean);
          });

        document
          .getElementById("btn-fix")
          .addEventListener("click", function () {
            const clean = digitsOnly(input.value);
            if (clean.length < 2) {
              resultEl.textContent =
                "Enter at least two digits to recalculate the last digit.";
              resultEl.className = "mt-3 text-sm font-medium text-red-600";
              stepContainer.classList.add("hidden");
              return;
            }
            const body = clean.slice(0, -1);
            const newCheck = calculateCheckDigit(body);
            const fixed = body + newCheck.toString();
            input.value = formatGroups(fixed);
            const valid = isLuhnValid(fixed);
            resultEl.innerHTML =
              'Recalculated check digit: <span class="mono">' +
              newCheck +
              '</span>. New number: <span class="mono">' +
              formatGroups(fixed) +
              "</span>.";
            resultEl.className = "mt-3 text-sm font-medium text-blue-700";
            showSteps(fixed);
          });

        document
          .getElementById("btn-clear")
          .addEventListener("click", function () {
            input.value = "";
            resultEl.textContent = "";
            resultEl.className = "mt-3 text-sm font-medium";
            stepContainer.classList.add("hidden");
          });

        // Generator
        const prefixInput = document.getElementById("prefix-input");
        const lengthInput = document.getElementById("length-input");
        const generatedOutput = document.getElementById("generated-output");

        document
          .getElementById("btn-generate")
          .addEventListener("click", function () {
            const length = parseInt(lengthInput.value, 10) || 16;
            const num = generateLuhnNumber(prefixInput.value, length);
            generatedOutput.value = formatGroups(num);
          });

        document
          .getElementById("btn-copy-generated")
          .addEventListener("click", function () {
            if (!generatedOutput.value) return;
            generatedOutput.select();
            generatedOutput.setSelectionRange(0, generatedOutput.value.length);
            try {
              document.execCommand("copy");
            } catch (e) {}
            window.getSelection().removeAllRanges();
          });
      });
    </script>

