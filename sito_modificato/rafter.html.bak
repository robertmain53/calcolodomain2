    <script>
      // Utility functions
      function toFeet(feet, inches) {
        feet = parseFloat(feet) || 0;
        inches = parseFloat(inches) || 0;
        return feet + inches / 12;
      }
      function fromFeet(feet) {
        const sign = feet < 0 ? -1 : 1;
        feet = Math.abs(feet);
        const f = Math.floor(feet);
        const inches = (feet - f) * 12;
        return { feet: sign * f, inches: inches };
      }
      function toMeters(m) {
        return parseFloat(m) || 0;
      }
      function formatImperial(feetVal) {
        if (!isFinite(feetVal)) return "—";
        const obj = fromFeet(feetVal);
        const f = obj.feet;
        const inches = obj.inches;
        const inchesRounded = Math.round(inches * 16) / 16; // to nearest 1/16
        const wholeInches = Math.floor(inchesRounded);
        const frac = inchesRounded - wholeInches;
        let fracStr = "";
        if (frac > 0.0001) {
          const denom = 16;
          const num = Math.round(frac * denom);
          const g = gcd(num, denom);
          fracStr = num / g + "/" + denom / g;
        }
        let parts = [];
        if (Math.abs(f) > 0.0001) parts.push(f.toFixed(0) + " ft");
        if (wholeInches || fracStr) {
          let inchText = "";
          if (wholeInches) inchText += wholeInches;
          if (fracStr) inchText += (wholeInches ? " " : "") + fracStr;
          parts.push(inchText + " in");
        }
        if (!parts.length) return "0 in";
        return parts.join(" ");
      }
      function formatMetric(m) {
        if (!isFinite(m)) return "—";
        if (m >= 1) {
          return m.toFixed(3) + " m";
        } else {
          return (m * 1000).toFixed(1) + " mm";
        }
      }
      function gcd(a, b) {
        a = Math.abs(a);
        b = Math.abs(b);
        while (b) {
          const t = b;
          b = a % b;
          a = t;
        }
        return a || 1;
      }

      function calculateRafter() {
        const unitSystem = document.getElementById("unitSystem").value;
        const rafterType = document.getElementById("rafterType").value;
        const errorMsg = document.getElementById("errorMsg");
        errorMsg.classList.add("hidden");
        errorMsg.textContent = "";

        // Pitch
        const rise = parseFloat(document.getElementById("pitchRise").value);
        const runPitch = parseFloat(document.getElementById("pitchRun").value);
        if (!(rise > 0) || !(runPitch > 0)) {
          errorMsg.textContent =
            "Please enter a valid roof pitch (rise and run must be greater than 0).";
          errorMsg.classList.remove("hidden");
          return;
        }

        let span,
          overhang,
          ridgeThk,
          seat,
          jackOffset = 0;
        let isMetric = unitSystem === "metric";

        if (isMetric) {
          span = toMeters(document.getElementById("spanMetric").value);
          overhang = toMeters(document.getElementById("overhangMetric").value);
          ridgeThk =
            (parseFloat(document.getElementById("ridgeMetric").value) || 0) /
            1000; // mm to m
          seat =
            (parseFloat(document.getElementById("seatMetric").value) || 0) /
            1000;
          jackOffset =
            (parseFloat(document.getElementById("jackOffsetMetric").value) ||
              0) / 1000;
        } else {
          span = toFeet(
            document.getElementById("spanFeet").value,
            document.getElementById("spanInches").value
          );
          overhang = toFeet(
            document.getElementById("overhangFeet").value,
            document.getElementById("overhangInches").value
          );
          ridgeThk =
            (parseFloat(document.getElementById("ridgeInches").value) || 0) /
            12;
          seat =
            (parseFloat(document.getElementById("seatInches").value) || 0) / 12;
          jackOffset =
            (parseFloat(document.getElementById("jackOffsetInches").value) ||
              0) / 12;
        }

        if (!(span > 0)) {
          errorMsg.textContent =
            "Please enter a valid building span greater than 0.";
          errorMsg.classList.remove("hidden");
          return;
        }

        const run = span / 2 - ridgeThk / 2;
        if (!(run > 0)) {
          errorMsg.textContent =
            "Ridge thickness is too large for the given span. Reduce ridge thickness or increase span.";
          errorMsg.classList.remove("hidden");
          return;
        }

        // Common rafter factor
        const commonFactor =
          Math.sqrt(rise * rise + runPitch * runPitch) / runPitch;

        let baseRun = run;
        if (rafterType === "hip") {
          // Approximate hip factor: commonFactor * sqrt(2)
          baseRun = run * Math.SQRT2;
        } else if (rafterType === "jack") {
          // Jack run reduced by offset along plate
          baseRun = run - jackOffset;
          if (baseRun <= 0) {
            errorMsg.textContent =
              "Jack offset is too large for the given span. Reduce jack offset.";
            errorMsg.classList.remove("hidden");
            return;
          }
        }

        const rafterLength = baseRun * commonFactor;
        const overhangLength = overhang * commonFactor;
        const totalLength = rafterLength + overhangLength;

        const plumbAngleRad = Math.atan(rise / runPitch);
        const plumbAngleDeg = (plumbAngleRad * 180) / Math.PI;
        const seatAngleDeg = 90 - plumbAngleDeg;

        // Birdsmouth depth (vertical) from seat length
        let birdsmouthDepth = 0;
        if (seat > 0) {
          birdsmouthDepth = seat * Math.tan(plumbAngleRad);
        }

        const lengthDisplay = document.getElementById("rafterLengthDisplay");
        const totalLengthDisplay = document.getElementById(
          "rafterTotalLengthDisplay"
        );
        const plumbDisplay = document.getElementById("plumbAngleDisplay");
        const seatDisplay = document.getElementById("seatAngleDisplay");
        const birdDisplay = document.getElementById("birdsmouthDisplay");
        const jackNote = document.getElementById("jackNote");

        if (isMetric) {
          lengthDisplay.textContent = formatMetric(rafterLength);
          totalLengthDisplay.textContent = formatMetric(totalLength);
          birdDisplay.textContent =
            seat > 0
              ? `Seat: ${(seat * 1000).toFixed(0)} mm, Depth: ${(
                  birdsmouthDepth * 1000
                ).toFixed(0)} mm`
              : "Seat: —";
        } else {
          lengthDisplay.textContent = formatImperial(rafterLength);
          totalLengthDisplay.textContent = formatImperial(totalLength);
          birdDisplay.textContent =
            seat > 0
              ? `Seat: ${formatImperial(seat)}, Depth: ${formatImperial(
                  birdsmouthDepth
                )}`
              : "Seat: —";
        }

        plumbDisplay.textContent = plumbAngleDeg.toFixed(1) + "°";
        seatDisplay.textContent = seatAngleDeg.toFixed(1) + "°";

        if (rafterType === "jack") {
          jackNote.hidden = false;
        } else {
          jackNote.hidden = true;
        }
      }

      function resetForm() {
        document.getElementById("unitSystem").value = "imperial";
        document.getElementById("rafterType").value = "common";
        document.getElementById("spanFeet").value = "";
        document.getElementById("spanInches").value = "";
        document.getElementById("spanMetric").value = "";
        document.getElementById("pitchRise").value = "";
        document.getElementById("pitchRun").value = 12;
        document.getElementById("overhangFeet").value = "";
        document.getElementById("overhangInches").value = "";
        document.getElementById("overhangMetric").value = "";
        document.getElementById("ridgeInches").value = "";
        document.getElementById("ridgeMetric").value = "";
        document.getElementById("seatInches").value = "";
        document.getElementById("seatMetric").value = "";
        document.getElementById("jackOffsetInches").value = "";
        document.getElementById("jackOffsetMetric").value = "";
        document.getElementById("rafterLengthDisplay").textContent = "—";
        document.getElementById("rafterTotalLengthDisplay").textContent = "—";
        document.getElementById("plumbAngleDisplay").textContent = "—";
        document.getElementById("seatAngleDisplay").textContent = "—";
        document.getElementById("birdsmouthDisplay").textContent = "—";
        document.getElementById("errorMsg").classList.add("hidden");
        document.getElementById("errorMsg").textContent = "";
        document.getElementById("jackNote").hidden = true;
        handleUnitChange();
        handleRafterTypeChange();
      }

      function handleUnitChange() {
        const unitSystem = document.getElementById("unitSystem").value;
        const isMetric = unitSystem === "metric";

        document
          .getElementById("spanImperial")
          .classList.toggle("hidden", isMetric);
        document
          .getElementById("overhangImperial")
          .classList.toggle("hidden", isMetric);
        document
          .getElementById("ridgeImperial")
          .classList.toggle("hidden", isMetric);
        document
          .getElementById("seatImperial")
          .classList.toggle("hidden", isMetric);
        document
          .getElementById("jackOffsetImperial")
          .classList.toggle("hidden", isMetric);

        document
          .getElementById("spanMetric")
          .classList.toggle("hidden", !isMetric);
        document
          .getElementById("overhangMetric")
          .classList.toggle("hidden", !isMetric);
        document
          .getElementById("ridgeMetric")
          .classList.toggle("hidden", !isMetric);
        document
          .getElementById("seatMetric")
          .classList.toggle("hidden", !isMetric);
        document
          .getElementById("jackOffsetMetric")
          .classList.toggle("hidden", !isMetric);
      }

      function handleRafterTypeChange() {
        const rafterType = document.getElementById("rafterType").value;
        const jackGroup = document.getElementById("jackOffsetGroup");
        if (rafterType === "jack") {
          jackGroup.classList.remove("hidden");
        } else {
          jackGroup.classList.add("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calcBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculateRafter();
          });
        document
          .getElementById("resetBtn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            resetForm();
          });
        document
          .getElementById("unitSystem")
          .addEventListener("change", handleUnitChange);
        document
          .getElementById("rafterType")
          .addEventListener("change", handleRafterTypeChange);
        handleUnitChange();
        handleRafterTypeChange();
      });

