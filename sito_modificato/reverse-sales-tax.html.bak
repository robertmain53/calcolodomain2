<script>
  (function() {
    const modeTotalBtn = document.getElementById('mode-total-incl');
    const modeBaseBtn = document.getElementById('mode-base-plus-tax');
    const panelTotal = document.getElementById('panel-total-incl');
    const panelBase = document.getElementById('panel-base-plus-tax');

    const totalIncludingInput = document.getElementById('totalIncluding');
    const currencySymbolInput = document.getElementById('currencySymbol');
    const taxRateMainInput = document.getElementById('taxRateMain');
    const taxRateSecondaryInput = document.getElementById('taxRateSecondary');
    const taxRateOtherInput = document.getElementById('taxRateOther');
    const roundToCentsInput = document.getElementById('roundToCents');
    const showLineBreakdownInput = document.getElementById('showLineBreakdown');

    const baseAmountInput = document.getElementById('baseAmount');
    const taxAmountKnownInput = document.getElementById('taxAmountKnown');
    const baseCurrencyPrefix = document.getElementById('baseCurrencyPrefix');
    const taxCurrencyPrefix = document.getElementById('taxCurrencyPrefix');

    const btnCalculate = document.getElementById('btnCalculate');
    const btnClear = document.getElementById('btnClear');
    const btnCalculateFromBaseTax = document.getElementById('btnCalculateFromBaseTax');
    const btnClearBaseTax = document.getElementById('btnClearBaseTax');

    const resultsCard = document.getElementById('resultsCard');
    const resultBase = document.getElementById('resultBase');
    const resultTax = document.getElementById('resultTax');
    const resultTotal = document.getElementById('resultTotal');
    const resultRate = document.getElementById('resultRate');
    const rateBreakdown = document.getElementById('rateBreakdown');
    const rateBreakdownList = document.getElementById('rateBreakdownList');
    const lineBreakdown = document.getElementById('lineBreakdown');
    const lineBreakdownBody = document.getElementById('lineBreakdownBody');

    function setMode(mode) {
      const activeClasses = 'px-3 py-1.5 rounded-full text-sm font-medium bg-blue-600 text-white';
      const inactiveClasses = 'px-3 py-1.5 rounded-full text-sm font-medium bg-gray-100 text-gray-700 hover:bg-gray-200';

      if (mode === 'total') {
        panelTotal.classList.remove('hidden');
        panelBase.classList.add('hidden');
        modeTotalBtn.className = activeClasses;
        modeBaseBtn.className = inactiveClasses;
      } else {
        panelTotal.classList.add('hidden');
        panelBase.classList.remove('hidden');
        modeTotalBtn.className = inactiveClasses;
        modeBaseBtn.className = activeClasses;
      }
      clearResults();
    }

    function parseNumber(input) {
      const v = parseFloat(String(input).replace(/,/g, ''));
      return isNaN(v) ? null : v;
    }

    function formatMoney(value, symbol, roundToCents) {
      if (value == null || !isFinite(value)) return '–';
      const decimals = roundToCents ? 2 : 4;
      return symbol + value.toFixed(decimals);
    }

    function formatPercent(value) {
      if (value == null || !isFinite(value)) return '–';
      return value.toFixed(3).replace(/0+$/, '').replace(/\.$/, '') + '%';
    }

    function clearResults() {
      resultsCard.classList.add('hidden');
      resultBase.textContent = '–';
      resultTax.textContent = '–';
      resultTotal.textContent = '–';
      resultRate.textContent = '–';
      rateBreakdown.classList.add('hidden');
      rateBreakdownList.innerHTML = '';
      lineBreakdown.classList.add('hidden');
      lineBreakdownBody.innerHTML = '';
    }

    function syncCurrencyPrefixes() {
      const sym = currencySymbolInput.value || '$';
      baseCurrencyPrefix.textContent = sym;
      taxCurrencyPrefix.textContent = sym;
    }

    function calculateFromTotal() {
      clearResults();
      const total = parseNumber(totalIncludingInput.value);
      if (total == null || total <= 0) {
        alert('Please enter a valid total including tax greater than 0.');
        return;
      }

      const r1 = parseNumber(taxRateMainInput.value) || 0;
      const r2 = parseNumber(taxRateSecondaryInput.value) || 0;
      const r3 = parseNumber(taxRateOtherInput.value) || 0;
      const combinedRatePct = r1 + r2 + r3;
      const combinedRate = combinedRatePct / 100;

      if (combinedRate < 0) {
        alert('Tax rate cannot be negative.');
        return;
      }

      if (combinedRate === 0) {
        // No tax: base = total, tax = 0
        const sym = currencySymbolInput.value || '$';
        const round = !!roundToCentsInput.checked;
        const base = total;
        const tax = 0;

        resultBase.textContent = formatMoney(base, sym, round);
        resultTax.textContent = formatMoney(tax, sym, round);
        resultTotal.textContent = formatMoney(total, sym, round);
        resultRate.textContent = '0%';

        resultsCard.classList.remove('hidden');
        lineBreakdown.classList.toggle('hidden', !showLineBreakdownInput.checked);
        if (showLineBreakdownInput.checked) {
          lineBreakdownBody.innerHTML = `
            <tr><td class="px-3 py-2">Base price (no tax)</td><td class="px-3 py-2 text-right">${formatMoney(base, sym, round)}</td></tr>
            <tr class="bg-gray-50"><td class="px-3 py-2 font-medium">Total</td><td class="px-3 py-2 text-right font-medium">${formatMoney(total, sym, round)}</td></tr>
          `;
        }
        return;
      }

      const base = total / (1 + combinedRate);
      const tax = total - base;
      const sym = currencySymbolInput.value || '$';
      const round = !!roundToCentsInput.checked;

      resultBase.textContent = formatMoney(base, sym, round);
      resultTax.textContent = formatMoney(tax, sym, round);
      resultTotal.textContent = formatMoney(total, sym, round);
      resultRate.textContent = formatPercent(combinedRatePct);

      // Rate breakdown
      rateBreakdownList.innerHTML = '';
      const parts = [];
      if (r1) parts.push({ label: 'Main tax', rate: r1 });
      if (r2) parts.push({ label: 'Secondary tax', rate: r2 });
      if (r3) parts.push({ label: 'Other tax', rate: r3 });

      if (parts.length > 0) {
        rateBreakdown.classList.remove('hidden');
        parts.forEach(p => {
          const li = document.createElement('li');
          li.textContent = `${p.label}: ${formatPercent(p.rate)}`;
          rateBreakdownList.appendChild(li);
        });
        const liTotal = document.createElement('li');
        liTotal.className = 'font-medium';
        liTotal.textContent = `Combined: ${formatPercent(combinedRatePct)}`;
        rateBreakdownList.appendChild(liTotal);
      } else {
        rateBreakdown.classList.add('hidden');
      }

      // Line breakdown
      lineBreakdownBody.innerHTML = '';
      if (showLineBreakdownInput.checked) {
        lineBreakdown.classList.remove('hidden');
        const rows = [];

        rows.push({
          label: 'Base price (before tax)',
          amount: base
        });

        if (r1) {
          rows.push({
            label: `Tax 1 (${formatPercent(r1)})`,
            amount: base * (r1 / 100)
          });
        }
        if (r2) {
          rows.push({
            label: `Tax 2 (${formatPercent(r2)})`,
            amount: base * (r2 / 100)
          });
        }
        if (r3) {
          rows.push({
            label: `Tax 3 (${formatPercent(r3)})`,
            amount: base * (r3 / 100)
          });
        }

        rows.forEach((row, idx) => {
          const tr = document.createElement('tr');
          if (idx % 2 === 1) tr.className = 'bg-gray-50';
          tr.innerHTML = `
            <td class="px-3 py-2">${row.label}</td>
            <td class="px-3 py-2 text-right">${formatMoney(row.amount, sym, round)}</td>
          `;
          lineBreakdownBody.appendChild(tr);
        });

        const trTotal = document.createElement('tr');
        trTotal.className = 'bg-blue-50';
        trTotal.innerHTML = `
          <td class="px-3 py-2 font-semibold">Total including tax</td>
          <td class="px-3 py-2 text-right font-semibold">${formatMoney(total, sym, round)}</td>
        `;
        lineBreakdownBody.appendChild(trTotal);
      } else {
        lineBreakdown.classList.add('hidden');
      }

      resultsCard.classList.remove('hidden');
    }

    function calculateFromBaseAndTax() {
      clearResults();
      const base = parseNumber(baseAmountInput.value);
      const tax = parseNumber(taxAmountKnownInput.value);
      if (base == null || base <= 0) {
        alert('Please enter a valid base price greater than 0.');
        return;
      }
      if (tax == null || tax < 0) {
        alert('Please enter a valid tax amount (0 or greater).');
        return;
      }

      const total = base + tax;
      const ratePct = (tax / base) * 100;
      const sym = currencySymbolInput.value || '$';
      const round = !!roundToCentsInput.checked;

      resultBase.textContent = formatMoney(base, sym, round);
      resultTax.textContent = formatMoney(tax, sym, round);
      resultTotal.textContent = formatMoney(total, sym, round);
      resultRate.textContent = formatPercent(ratePct);

      rateBreakdown.classList.add('hidden');
      rateBreakdownList.innerHTML = '';

      lineBreakdownBody.innerHTML = '';
      if (showLineBreakdownInput.checked) {
        lineBreakdown.classList.remove('hidden');
        lineBreakdownBody.innerHTML = `
          <tr><td class="px-3 py-2">Base price (before tax)</td><td class="px-3 py-2 text-right">${formatMoney(base, sym, round)}</td></tr>
          <tr class="bg-gray-50"><td class="px-3 py-2">Tax amount</td><td class="px-3 py-2 text-right">${formatMoney(tax, sym, round)}</td></tr>
          <tr class="bg-blue-50"><td class="px-3 py-2 font-semibold">Total including tax</td><td class="px-3 py-2 text-right font-semibold">${formatMoney(total, sym, round)}</td></tr>
        `;
      } else {
        lineBreakdown.classList.add('hidden');
      }

      resultsCard.classList.remove('hidden');
    }

    function clearTotalPanel() {
      totalIncludingInput.value = '';
      taxRateMainInput.value = '';
      taxRateSecondaryInput.value = '';
      taxRateOtherInput.value = '';
      roundToCentsInput.checked = true;
      showLineBreakdownInput.checked = true;
      clearResults();
    }

    function clearBaseTaxPanel() {
      baseAmountInput.value = '';
      taxAmountKnownInput.value = '';
      clearResults();
    }

    modeTotalBtn.addEventListener('click', () => setMode('total'));
    modeBaseBtn.addEventListener('click', () => setMode('base'));

    btnCalculate.addEventListener('click', calculateFromTotal);
    btnClear.addEventListener('click', clearTotalPanel);
    btnCalculateFromBaseTax.addEventListener('click', calculateFromBaseAndTax);
    btnClearBaseTax.addEventListener('click', clearBaseTaxPanel);

    currencySymbolInput.addEventListener('input', syncCurrencyPrefixes);
    syncCurrencyPrefixes();

    totalIncludingInput.addEventListener('keyup', e => { if (e.key === 'Enter') calculateFromTotal(); });
    baseAmountInput.addEventListener('keyup', e => { if (e.key === 'Enter') calculateFromBaseAndTax(); });
    taxAmountKnownInput.addEventListener('keyup', e => { if (e.key === 'Enter') calculateFromBaseAndTax(); });
  })();
</script>

