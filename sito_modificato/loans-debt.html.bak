    <script>
      // Utility functions
      function formatMoney(value) {
        if (!isFinite(value)) return "0";
        return value.toFixed(2);
      }

      function createDebtRow(
        name = "",
        balance = 5000,
        apr = 18,
        minPay = 150,
        type = "credit-card"
      ) {
        const tr = document.createElement("tr");
        tr.className = "border-t border-gray-100";
        tr.innerHTML = `
      <td class="px-3 py-2">
        <input type="text" class="w-full border border-gray-200 rounded px-2 py-1 text-sm" value="${name}" placeholder="e.g. Credit Card 1">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-24 border border-gray-200 rounded px-2 py-1 text-sm text-right" value="${balance}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-20 border border-gray-200 rounded px-2 py-1 text-sm text-right" value="${apr}">
      </td>
      <td class="px-3 py-2 text-right">
        <input type="number" min="0" step="0.01" class="w-24 border border-gray-200 rounded px-2 py-1 text-sm text-right" value="${minPay}">
      </td>
      <td class="px-3 py-2 text-center">
        <select class="border border-gray-200 rounded px-2 py-1 text-xs">
          <option value="credit-card"${
            type === "credit-card" ? " selected" : ""
          }>Credit card</option>
          <option value="personal-loan"${
            type === "personal-loan" ? " selected" : ""
          }>Personal loan</option>
          <option value="auto-loan"${
            type === "auto-loan" ? " selected" : ""
          }>Auto loan</option>
          <option value="student-loan"${
            type === "student-loan" ? " selected" : ""
          }>Student loan</option>
          <option value="other"${
            type === "other" ? " selected" : ""
          }>Other</option>
        </select>
      </td>
      <td class="px-3 py-2 text-center">
        <button type="button" class="text-red-500 hover:text-red-700 text-xs remove-debt">✕</button>
      </td>
    `;
        return tr;
      }

      function getDebtsFromTable() {
        const rows = Array.from(document.querySelectorAll("#debts-body tr"));
        const debts = [];
        for (const row of rows) {
          const inputs = row.querySelectorAll("input, select");
          const name = inputs[0].value.trim() || "Debt " + (debts.length + 1);
          const balance = parseFloat(inputs[1].value) || 0;
          const apr = parseFloat(inputs[2].value) || 0;
          const minPay = parseFloat(inputs[3].value) || 0;
          if (balance > 0 && minPay > 0) {
            debts.push({
              name,
              balance,
              apr,
              minPay,
              monthlyRate: apr / 100 / 12,
            });
          }
        }
        return debts;
      }

      function simulatePayoff(debts, extra, strategy, maxMonths = 600) {
        // Deep copy
        const ds = debts.map((d) => ({ ...d, balance: d.balance }));
        const schedule = [];
        let month = 0;
        let totalInterest = 0;

        function allPaid() {
          return ds.every((d) => d.balance <= 0.01);
        }

        while (!allPaid() && month < maxMonths) {
          month++;
          let monthInterest = 0;
          let monthPrincipal = 0;
          let monthPayment = 0;

          // 1. Apply minimum payments
          for (const d of ds) {
            if (d.balance <= 0) continue;
            const interest = d.balance * d.monthlyRate;
            const payment = Math.min(d.minPay, d.balance + interest);
            const principal = payment - interest;
            d.balance = Math.max(0, d.balance - principal);
            monthInterest += interest;
            monthPrincipal += principal;
            monthPayment += payment;
          }

          // 2. Extra payment allocation
          let extraLeft = extra;
          if (extraLeft > 0 && !allPaid()) {
            let ordered = ds.filter((d) => d.balance > 0);
            if (strategy === "avalanche") {
              ordered.sort((a, b) => b.apr - a.apr);
            } else if (strategy === "snowball") {
              ordered.sort((a, b) => a.balance - b.balance);
            } else if (strategy === "proportional") {
              const totalBal = ordered.reduce((s, d) => s + d.balance, 0);
              for (const d of ordered) {
                const share =
                  totalBal > 0 ? extraLeft * (d.balance / totalBal) : 0;
                const pay = Math.min(share, d.balance);
                d.balance -= pay;
                monthPrincipal += pay;
                monthPayment += pay;
                extraLeft -= pay;
              }
              extraLeft = 0;
            }

            if (strategy === "avalanche" || strategy === "snowball") {
              for (const d of ordered) {
                if (extraLeft <= 0) break;
                const pay = Math.min(extraLeft, d.balance);
                d.balance -= pay;
                monthPrincipal += pay;
                monthPayment += pay;
                extraLeft -= pay;
              }
            }
          }

          totalInterest += monthInterest;
          const remaining = ds.reduce((s, d) => s + Math.max(0, d.balance), 0);

          schedule.push({
            month,
            payment: monthPayment,
            interest: monthInterest,
            principal: monthPrincipal,
            remaining,
          });

          if (remaining <= 0.01) break;
        }

        const totalPaid = schedule.reduce((s, m) => s + m.payment, 0);
        return {
          months: schedule.length,
          totalInterest,
          totalPaid,
          schedule,
        };
      }

      function calcConsolidation(debts, apr, years, fees) {
        const principal = debts.reduce((s, d) => s + d.balance, 0);
        if (principal <= 0 || apr < 0 || years <= 0) {
          return {
            principal: 0,
            payment: 0,
            months: 0,
            totalInterest: 0,
            totalPaid: 0,
          };
        }
        const r = apr / 100 / 12;
        const n = years * 12;
        let payment;
        if (r === 0) {
          payment = principal / n;
        } else {
          payment = (principal * r) / (1 - Math.pow(1 + r, -n));
        }
        const totalPaid = payment * n + fees;
        const totalInterest = totalPaid - principal;
        return {
          principal,
          payment,
          months: n,
          totalInterest,
          totalPaid,
        };
      }

      document.addEventListener("DOMContentLoaded", () => {
        const debtsBody = document.getElementById("debts-body");
        const addDebtBtn = document.getElementById("add-debt");
        const calculateBtn = document.getElementById("calculate");
        const resultsSection = document.getElementById("results-section");

        // Seed with two example debts
        debtsBody.appendChild(
          createDebtRow("Credit Card 1", 5000, 19.99, 150, "credit-card")
        );
        debtsBody.appendChild(
          createDebtRow("Auto Loan", 12000, 6.5, 250, "auto-loan")
        );

        addDebtBtn.addEventListener("click", () => {
          debtsBody.appendChild(createDebtRow());
        });

        debtsBody.addEventListener("click", (e) => {
          if (e.target.classList.contains("remove-debt")) {
            const row = e.target.closest("tr");
            if (row) row.remove();
          }
        });

        calculateBtn.addEventListener("click", () => {
          const debts = getDebtsFromTable();
          if (!debts.length) {
            alert(
              "Please enter at least one debt with a positive balance and minimum payment."
            );
            return;
          }

          const strategy = document.getElementById("strategy").value;
          const extra =
            parseFloat(document.getElementById("extra-payment").value) || 0;
          const consolApr =
            parseFloat(document.getElementById("consol-apr").value) || 0;
          const consolTerm =
            parseFloat(document.getElementById("consol-term").value) || 0;
          const consolFees =
            parseFloat(document.getElementById("consol-fees").value) || 0;

          const payoff = simulatePayoff(debts, extra, strategy);
          const consol = calcConsolidation(
            debts,
            consolApr,
            consolTerm,
            consolFees
          );

          // Update summary
          document.getElementById("current-months").textContent =
            payoff.months +
            " months (~" +
            (payoff.months / 12).toFixed(1) +
            " years)";
          document.getElementById("current-interest").textContent = formatMoney(
            payoff.totalInterest
          );
          document.getElementById("current-total").textContent = formatMoney(
            payoff.totalPaid
          );

          document.getElementById("consol-payment").textContent = formatMoney(
            consol.payment
          );
          document.getElementById("consol-months").textContent =
            consol.months +
            " months (~" +
            (consol.months / 12).toFixed(1) +
            " years)";
          document.getElementById("consol-interest").textContent = formatMoney(
            consol.totalInterest
          );
          document.getElementById("consol-total").textContent = formatMoney(
            consol.totalPaid
          );

          const comparisonNote = document.getElementById("comparison-note");
          if (consol.principal <= 0) {
            comparisonNote.textContent =
              "Enter a consolidation APR, term, and fees to compare against your current payoff plan.";
          } else {
            const diffInterest = payoff.totalInterest - consol.totalInterest;
            if (diffInterest > 0) {
              comparisonNote.textContent =
                "With the consolidation loan, you would pay approximately $" +
                formatMoney(diffInterest) +
                " less in interest compared with your current payoff strategy, assuming you do not add new debt.";
            } else if (diffInterest < 0) {
              comparisonNote.textContent =
                "Your current payoff strategy would save approximately $" +
                formatMoney(-diffInterest) +
                " in interest compared with the consolidation loan. A lower monthly payment from consolidation may still help cash flow, but it costs more overall.";
            } else {
              comparisonNote.textContent =
                "Both approaches result in roughly the same total interest. Focus on which option gives you a manageable monthly payment and the most discipline.";
            }
          }

          // Update schedule table (current plan)
          const scheduleBody = document.getElementById("schedule-body");
          scheduleBody.innerHTML = "";
          payoff.schedule.forEach((row) => {
            const tr = document.createElement("tr");
            tr.className = "border-t border-gray-100";
            tr.innerHTML = `
          <td class="px-2 py-1">${row.month}</td>
          <td class="px-2 py-1 text-right">$${formatMoney(row.payment)}</td>
          <td class="px-2 py-1 text-right">$${formatMoney(row.interest)}</td>
          <td class="px-2 py-1 text-right">$${formatMoney(row.principal)}</td>
          <td class="px-2 py-1 text-right">$${formatMoney(row.remaining)}</td>
        `;
            scheduleBody.appendChild(tr);
          });

          resultsSection.classList.remove("hidden");
          resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
