    <script>
      (function () {
        const wavelengthInput = document.getElementById("wavelength");
        const wavelengthUnit = document.getElementById("wavelength-unit");
        const slitInput = document.getElementById("slit-separation");
        const slitUnit = document.getElementById("slit-separation-unit");
        const screenInput = document.getElementById("screen-distance");
        const screenUnit = document.getElementById("screen-distance-unit");
        const orderInput = document.getElementById("order-m");
        const fringeTypeSelect = document.getElementById("fringe-type");
        const errorEl = document.getElementById("input-error");

        const fringeSpacingEl = document.getElementById("fringe-spacing");
        const fringeSpacingMmEl = document.getElementById("fringe-spacing-mm");
        const fringePosEl = document.getElementById("fringe-position");
        const fringePosMmEl = document.getElementById("fringe-position-mm");
        const angleEl = document.getElementById("fringe-angle");
        const angleDegEl = document.getElementById("fringe-angle-deg");
        const pathDiffEl = document.getElementById("path-diff");
        const pathDiffLambdaEl = document.getElementById("path-diff-lambda");

        const canvas = document.getElementById("pattern-canvas");
        const spanSlider = document.getElementById("span-slider");
        const spanValueEl = document.getElementById("span-value");
        const resolutionSlider = document.getElementById("resolution-slider");

        function toMeters(value, unit) {
          const v = Number(value);
          if (!isFinite(v)) return NaN;
          switch (unit) {
            case "nm":
              return v * 1e-9;
            case "mm":
              return v * 1e-3;
            case "cm":
              return v * 1e-2;
            case "m":
              return v;
            default:
              return NaN;
          }
        }

        function formatNumber(x, decimals = 3) {
          if (!isFinite(x)) return "–";
          const abs = Math.abs(x);
          if (abs !== 0 && (abs < 1e-4 || abs > 1e4)) {
            return x.toExponential(2);
          }
          return x.toFixed(decimals);
        }

        function compute() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          const lambda = toMeters(wavelengthInput.value, wavelengthUnit.value);
          const d = toMeters(slitInput.value, slitUnit.value);
          const L = toMeters(screenInput.value, screenUnit.value);
          const m = Number(orderInput.value);
          const fringeType = fringeTypeSelect.value;

          if (!isFinite(lambda) || lambda <= 0) {
            showError("Please enter a positive wavelength.");
            return null;
          }
          if (!isFinite(d) || d <= 0) {
            showError("Please enter a positive slit separation.");
            return null;
          }
          if (!isFinite(L) || L <= 0) {
            showError("Please enter a positive screen distance.");
            return null;
          }
          if (!Number.isFinite(m)) {
            showError("Please enter a valid fringe order m.");
            return null;
          }

          // Fringe spacing
          const deltaY = (lambda * L) / d; // meters

          // Fringe position
          let effectiveM;
          if (fringeType === "bright") {
            effectiveM = m;
          } else {
            // dark fringe: (m + 1/2)
            effectiveM = m + 0.5;
          }
          const y = (effectiveM * lambda * L) / d; // meters

          // Angle using small-angle approx: theta ≈ y / L
          const theta = y / L; // radians
          const thetaDeg = (theta * 180) / Math.PI;

          // Path difference
          const delta = d * Math.sin(theta); // more exact
          const deltaInLambda = delta / lambda;

          // Update UI
          fringeSpacingEl.textContent = formatNumber(deltaY, 4) + " m";
          fringeSpacingMmEl.textContent = formatNumber(deltaY * 1e3, 3) + " mm";

          fringePosEl.textContent = formatNumber(y, 4) + " m";
          fringePosMmEl.textContent = formatNumber(y * 1e3, 3) + " mm";

          angleEl.textContent = formatNumber(theta, 4) + " rad";
          angleDegEl.textContent = formatNumber(thetaDeg, 3) + "°";

          pathDiffEl.textContent = formatNumber(delta, 4) + " m";
          pathDiffLambdaEl.textContent = formatNumber(deltaInLambda, 3) + " λ";

          return { lambda, d, L, deltaY };
        }

        function showError(msg) {
          errorEl.textContent = msg;
          errorEl.classList.remove("hidden");
          clearResults();
        }

        function clearResults() {
          [
            fringeSpacingEl,
            fringeSpacingMmEl,
            fringePosEl,
            fringePosMmEl,
            angleEl,
            angleDegEl,
            pathDiffEl,
            pathDiffLambdaEl,
          ].forEach((el) => {
            el.textContent = "–";
          });
        }

        function drawPattern(params) {
          if (!canvas || !canvas.getContext) return;
          const ctx = canvas.getContext("2d");
          const width = canvas.clientWidth;
          const height = canvas.clientHeight;
          canvas.width = width * window.devicePixelRatio;
          canvas.height = height * window.devicePixelRatio;
          ctx.scale(window.devicePixelRatio, window.devicePixelRatio);

          // Background
          ctx.fillStyle = "#020617";
          ctx.fillRect(0, 0, width, height);

          if (!params) return;

          const { lambda, d, L } = params;
          const span = Number(spanSlider.value); // in multiples of fringe spacing
          spanValueEl.textContent = "±" + span;
          const resolution = Number(resolutionSlider.value);

          // We'll parametrize y in terms of fringe spacings: y = k * (lambda L / d)
          const maxK = span;
          const minK = -span;

          // Precompute constants for intensity: I ∝ cos^2(π d y / (λ L))
          // Let y = k * (λ L / d) => argument = π k
          ctx.save();
          ctx.translate(0, height / 2);

          for (let i = 0; i < resolution; i++) {
            const t = i / (resolution - 1);
            const k = minK + (maxK - minK) * t;
            const arg = Math.PI * k;
            const I = Math.cos(arg) ** 2; // normalized 0..1

            const x = t * width;
            const barHeight = (I * (height * 0.9)) / 2;

            const intensity = Math.round(40 + I * 215); // 40..255
            ctx.strokeStyle = `rgb(${intensity},${intensity},${intensity})`;
            ctx.beginPath();
            ctx.moveTo(x, -barHeight);
            ctx.lineTo(x, barHeight);
            ctx.stroke();
          }

          // Draw center line
          ctx.strokeStyle = "rgba(59,130,246,0.7)";
          ctx.lineWidth = 1;
          ctx.beginPath();
          ctx.moveTo(width / 2, -height / 2);
          ctx.lineTo(width / 2, height / 2);
          ctx.stroke();

          ctx.restore();
        }

        // Event listeners
        document.getElementById("calc-button").addEventListener("click", () => {
          const params = compute();
          drawPattern(params);
        });

        document
          .getElementById("reset-button")
          .addEventListener("click", () => {
            wavelengthInput.value = 632.8;
            wavelengthUnit.value = "nm";
            slitInput.value = 0.25;
            slitUnit.value = "mm";
            screenInput.value = 1.5;
            screenUnit.value = "m";
            orderInput.value = 1;
            fringeTypeSelect.value = "bright";
            spanSlider.value = 3;
            resolutionSlider.value = 600;
            errorEl.classList.add("hidden");
            errorEl.textContent = "";
            const params = compute();
            drawPattern(params);
          });

        [spanSlider, resolutionSlider].forEach((el) => {
          el.addEventListener("input", () => {
            const params = compute();
            drawPattern(params);
          });
        });

        // Re-draw on resize
        window.addEventListener("resize", () => {
          const params = compute();
          drawPattern(params);
        });

        // Initial draw
        const initialParams = compute();
        drawPattern(initialParams);
      })();
    </script>
  
