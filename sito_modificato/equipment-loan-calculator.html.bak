    <script>
      // Utility formatting
      function fmtMoney(v) {
        if (!isFinite(v)) return "$0";
        return (
          "$" +
          v.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      // Tabs
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const tab = btn.dataset.tab;
          document.querySelectorAll(".tab-btn").forEach((b) => {
            b.classList.remove("border-blue-600", "text-blue-600");
            b.classList.add("border-transparent", "text-gray-600");
          });
          btn.classList.add("border-blue-600", "text-blue-600");
          btn.classList.remove("text-gray-600", "border-transparent");
          document
            .querySelectorAll(".tab-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById("tab-" + tab).classList.remove("hidden");
        });
      });

      // Sync sliders and inputs
      function syncRange(numId, rangeId) {
        const num = document.getElementById(numId);
        const range = document.getElementById(rangeId);
        num.addEventListener("input", () => {
          if (!isNaN(num.value)) range.value = num.value;
        });
        range.addEventListener("input", () => {
          num.value = range.value;
        });
      }
      syncRange("termYears", "termYearsRange");
      syncRange("interestRate", "interestRateRange");
      syncRange("affTermYears", "affTermYearsRange");
      syncRange("affRate", "affRateRange");

      const downPct = document.getElementById("downPct");
      const downPctLabel = document.getElementById("downPctLabel");
      const residualPct = document.getElementById("residualPct");
      const residualPctLabel = document.getElementById("residualPctLabel");
      const affDownPct = document.getElementById("affDownPct");
      const affDownPctLabel = document.getElementById("affDownPctLabel");

      function updateDownFromPct() {
        const cost =
          parseFloat(document.getElementById("equipCost").value) || 0;
        const pct = parseFloat(downPct.value) || 0;
        document.getElementById("downPayment").value = (
          (cost * pct) /
          100
        ).toFixed(0);
        downPctLabel.textContent = pct + "%";
      }
      function updatePctFromDown() {
        const cost =
          parseFloat(document.getElementById("equipCost").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const pct =
          cost > 0 ? Math.min(100, Math.max(0, (down / cost) * 100)) : 0;
        downPct.value = pct.toFixed(0);
        downPctLabel.textContent = pct.toFixed(0) + "%";
      }
      function updateResidualFromPct() {
        const cost =
          parseFloat(document.getElementById("equipCost").value) || 0;
        const pct = parseFloat(residualPct.value) || 0;
        document.getElementById("residualValue").value = (
          (cost * pct) /
          100
        ).toFixed(0);
        residualPctLabel.textContent = pct + "%";
      }
      function updatePctFromResidual() {
        const cost =
          parseFloat(document.getElementById("equipCost").value) || 0;
        const res =
          parseFloat(document.getElementById("residualValue").value) || 0;
        const pct =
          cost > 0 ? Math.min(100, Math.max(0, (res / cost) * 100)) : 0;
        residualPct.value = pct.toFixed(0);
        residualPctLabel.textContent = pct.toFixed(0) + "%";
      }
      function updateAffDownLabel() {
        affDownPctLabel.textContent = (parseFloat(affDownPct.value) || 0) + "%";
      }

      downPct.addEventListener("input", updateDownFromPct);
      document
        .getElementById("downPayment")
        .addEventListener("input", updatePctFromDown);
      document.getElementById("equipCost").addEventListener("input", () => {
        updatePctFromDown();
        updatePctFromResidual();
      });
      residualPct.addEventListener("input", updateResidualFromPct);
      document
        .getElementById("residualValue")
        .addEventListener("input", updatePctFromResidual);
      affDownPct.addEventListener("input", updateAffDownLabel);
      updateDownFromPct();
      updateResidualFromPct();
      updateAffDownLabel();

      // Sales tax toggle
      const includeSalesTax = document.getElementById("includeSalesTax");
      const salesTaxRow = document.getElementById("salesTaxRow");
      includeSalesTax.addEventListener("change", () => {
        salesTaxRow.classList.toggle("hidden", !includeSalesTax.checked);
      });

      // Core loan calculation
      function buildSchedule(amountFinanced, annualRate, years, residual) {
        const n = Math.round(years * 12);
        const r = annualRate / 100 / 12;
        const schedule = [];
        let balance = amountFinanced;
        let payment;

        if (r === 0) {
          payment = (amountFinanced - residual) / n;
        } else {
          const pow = Math.pow(1 + r, n);
          payment =
            (amountFinanced * (r * pow)) / (pow - 1) -
            residual * (r / (pow - 1));
        }

        let totalInterest = 0;
        for (let i = 1; i <= n; i++) {
          let interest = balance * r;
          if (!isFinite(interest)) interest = 0;
          let principal = payment - interest;
          if (i === n && residual > 0) {
            // Last period: leave residual as remaining balance
            principal = balance - residual;
          }
          balance -= principal;
          if (i === n && residual > 0) {
            balance = residual;
          }
          totalInterest += interest;
          schedule.push({
            period: i,
            payment,
            principal,
            interest,
            balance: Math.max(0, balance),
          });
        }
        return { schedule, payment, totalInterest, n };
      }

      function recalcMain() {
        const cost =
          parseFloat(document.getElementById("equipCost").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const years =
          parseFloat(document.getElementById("termYears").value) || 0;
        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const residual =
          parseFloat(document.getElementById("residualValue").value) || 0;
        const taxRate =
          (parseFloat(document.getElementById("taxRate").value) || 0) / 100;
        const salesTaxRate = includeSalesTax.checked
          ? (parseFloat(document.getElementById("salesTaxRate").value) || 0) /
            100
          : 0;

        const salesTax = cost * salesTaxRate;
        const amountFinanced = Math.max(0, cost + salesTax - down);

        const { schedule, payment, totalInterest, n } = buildSchedule(
          amountFinanced,
          rate,
          years,
          residual
        );

        const totalPaid = payment * n + (residual || 0);
        const taxSavings = totalInterest * taxRate;
        const afterTaxCost = totalPaid - taxSavings;

        document.getElementById("sumAmountFinanced").textContent =
          fmtMoney(amountFinanced);
        document.getElementById("sumMonthlyPayment").textContent =
          fmtMoney(payment);
        document.getElementById("sumNumPayments").textContent = n.toString();
        document.getElementById("sumTotalPaid").textContent =
          fmtMoney(totalPaid);
        document.getElementById("sumTotalInterest").textContent =
          fmtMoney(totalInterest);
        document.getElementById("sumTaxSavings").textContent =
          fmtMoney(taxSavings);
        document.getElementById("sumAfterTaxCost").textContent =
          fmtMoney(afterTaxCost);

        const principalPortion = (amountFinanced / totalPaid) * 100;
        const interestPortion = 100 - principalPortion;
        document.getElementById("barPrincipal").style.width =
          principalPortion + "%";
        document.getElementById("barInterest").style.width =
          interestPortion + "%";

        const tbody = document.getElementById("amortBody");
        tbody.innerHTML = "";
        schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 whitespace-nowrap text-gray-700">${row.period}</td>
        <td class="px-3 py-1 text-right">${fmtMoney(row.payment)}</td>
        <td class="px-3 py-1 text-right">${fmtMoney(row.principal)}</td>
        <td class="px-3 py-1 text-right">${fmtMoney(row.interest)}</td>
        <td class="px-3 py-1 text-right">${fmtMoney(row.balance)}</td>
      `;
          tbody.appendChild(tr);
        });

        return {
          amountFinanced,
          payment,
          totalInterest,
          totalPaid,
          n,
          schedule,
        };
      }

      document.getElementById("calcBtn").addEventListener("click", recalcMain);
      // Initial calculation
      recalcMain();

      // CSV download
      document
        .getElementById("downloadCsvBtn")
        .addEventListener("click", () => {
          const cost =
            parseFloat(document.getElementById("equipCost").value) || 0;
          const down =
            parseFloat(document.getElementById("downPayment").value) || 0;
          const years =
            parseFloat(document.getElementById("termYears").value) || 0;
          const rate =
            parseFloat(document.getElementById("interestRate").value) || 0;
          const residual =
            parseFloat(document.getElementById("residualValue").value) || 0;
          const salesTaxRate = includeSalesTax.checked
            ? (parseFloat(document.getElementById("salesTaxRate").value) || 0) /
              100
            : 0;
          const salesTax = cost * salesTaxRate;
          const amountFinanced = Math.max(0, cost + salesTax - down);
          const { schedule } = buildSchedule(
            amountFinanced,
            rate,
            years,
            residual
          );

          let csv = "Period,Payment,Principal,Interest,Balance\n";
          schedule.forEach((r) => {
            csv += `${r.period},${r.payment.toFixed(2)},${r.principal.toFixed(
              2
            )},${r.interest.toFixed(2)},${r.balance.toFixed(2)}\n`;
          });

          const blob = new Blob([csv], { type: "text/csv" });
          const url = URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = "equipment-loan-amortization.csv";
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          URL.revokeObjectURL(url);
        });

      // Affordability calculation
      function recalcAffordability() {
        const budget =
          parseFloat(document.getElementById("affBudget").value) || 0;
        const years =
          parseFloat(document.getElementById("affTermYears").value) || 0;
        const rate = parseFloat(document.getElementById("affRate").value) || 0;
        const downPctVal =
          (parseFloat(document.getElementById("affDownPct").value) || 0) / 100;

        const n = Math.round(years * 12);
        const r = rate / 100 / 12;
        let amountFinanced;
        if (r === 0) {
          amountFinanced = budget * n;
        } else {
          const pow = Math.pow(1 + r, n);
          amountFinanced = (budget * (pow - 1)) / (r * pow);
        }
        const maxPrice = amountFinanced / (1 - downPctVal);
        const downAmount = maxPrice * downPctVal;
        const totalInterest = r === 0 ? 0 : budget * n - amountFinanced;

        document.getElementById("affMaxPrice").textContent = fmtMoney(maxPrice);
        document.getElementById("affDownAmount").textContent =
          fmtMoney(downAmount);
        document.getElementById("affAmountFinanced").textContent =
          fmtMoney(amountFinanced);
        document.getElementById("affTotalInterest").textContent =
          fmtMoney(totalInterest);
      }
      document
        .getElementById("affCalcBtn")
        .addEventListener("click", recalcAffordability);
      recalcAffordability();

      // Loan vs lease comparison
      function recalcCompare() {
        const price =
          parseFloat(document.getElementById("cmpLoanPrice").value) || 0;
        const down =
          parseFloat(document.getElementById("cmpLoanDown").value) || 0;
        const rate =
          parseFloat(document.getElementById("cmpLoanRate").value) || 0;
        const years =
          parseFloat(document.getElementById("cmpLoanYears").value) || 0;
        const leasePayment =
          parseFloat(document.getElementById("cmpLeasePayment").value) || 0;
        const leaseMonths =
          parseFloat(document.getElementById("cmpLeaseMonths").value) || 0;
        const leaseResidual =
          parseFloat(document.getElementById("cmpLeaseResidual").value) || 0;
        const taxRate =
          (parseFloat(document.getElementById("cmpTaxRate").value) || 0) / 100;

        const amountFinanced = Math.max(0, price - down);
        const { payment, totalInterest, n } = buildSchedule(
          amountFinanced,
          rate,
          years,
          0
        );
        const loanTotalPaid = payment * n;
        const loanTaxSavings = totalInterest * taxRate;
        const loanAfterTax = loanTotalPaid - loanTaxSavings;

        const leaseTotalPayments = leasePayment * leaseMonths;
        const leaseGross = leaseTotalPayments + leaseResidual;
        const leaseTaxSavings = leaseTotalPayments * taxRate;
        const leaseAfterTax = leaseGross - leaseTaxSavings;

        document.getElementById("cmpLoanMonthly").textContent =
          fmtMoney(payment);
        document.getElementById("cmpLoanTotalPaid").textContent =
          fmtMoney(loanTotalPaid);
        document.getElementById("cmpLoanInterest").textContent =
          fmtMoney(totalInterest);
        document.getElementById("cmpLoanTaxSavings").textContent =
          fmtMoney(loanTaxSavings);
        document.getElementById("cmpLoanAfterTax").textContent =
          fmtMoney(loanAfterTax);

        document.getElementById("cmpLeaseTotalPayments").textContent =
          fmtMoney(leaseTotalPayments);
        document.getElementById("cmpLeaseBuyout").textContent =
          fmtMoney(leaseResidual);
        document.getElementById("cmpLeaseGross").textContent =
          fmtMoney(leaseGross);
        document.getElementById("cmpLeaseTaxSavings").textContent =
          fmtMoney(leaseTaxSavings);
        document.getElementById("cmpLeaseAfterTax").textContent =
          fmtMoney(leaseAfterTax);
      }
      document
        .getElementById("cmpCalcBtn")
        .addEventListener("click", recalcCompare);
      recalcCompare();

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const ans = btn.parentElement.querySelector(".faq-answer");
            const isHidden = ans.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((icon) => (icon.textContent = "+"));
            if (isHidden) {
              ans.classList.remove("hidden");
              btn.querySelector("span:last-child").textContent = "−";
            }
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
