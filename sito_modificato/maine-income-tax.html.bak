    <script>
      // Maine tax parameters (approximate, for illustration only)
      const ME_PARAMS = {
        2024: {
          standardDeduction: {
            single: 15000,
            married_joint: 30000,
            married_separate: 15000,
            hoh: 22500,
          },
          personalExemptionPerPerson: 4800,
          brackets: {
            single: [
              { upTo: 26000, rate: 0.058 },
              { upTo: 62000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            married_joint: [
              { upTo: 52000, rate: 0.058 },
              { upTo: 124000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            married_separate: [
              { upTo: 26000, rate: 0.058 },
              { upTo: 62000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            hoh: [
              { upTo: 39000, rate: 0.058 },
              { upTo: 93000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
          },
        },
        2023: {
          standardDeduction: {
            single: 14000,
            married_joint: 28000,
            married_separate: 14000,
            hoh: 21000,
          },
          personalExemptionPerPerson: 4800,
          brackets: {
            single: [
              { upTo: 24000, rate: 0.058 },
              { upTo: 57000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            married_joint: [
              { upTo: 48000, rate: 0.058 },
              { upTo: 114000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            married_separate: [
              { upTo: 24000, rate: 0.058 },
              { upTo: 57000, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
            hoh: [
              { upTo: 36000, rate: 0.058 },
              { upTo: 85500, rate: 0.0675 },
              { upTo: Infinity, rate: 0.0715 },
            ],
          },
        },
      };

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function calculateMaineTax() {
        const year = document.getElementById("tax-year").value;
        const params = ME_PARAMS[year];

        const filingStatus = document.getElementById("filing-status").value;
        const wages = parseFloat(document.getElementById("wages").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("other-income").value) || 0;
        const preTax =
          parseFloat(document.getElementById("pre-tax").value) || 0;
        const dependents =
          parseInt(document.getElementById("dependents").value, 10) || 0;

        const totalIncome = Math.max(0, wages + otherIncome);
        const agi = Math.max(0, totalIncome - preTax);

        const useStandard =
          document.getElementById("deduction-standard").checked;
        let deductions = 0;
        if (useStandard) {
          deductions = params.standardDeduction[filingStatus] || 0;
        } else {
          deductions =
            parseFloat(document.getElementById("itemized-amount").value) || 0;
        }

        // Personal exemptions: taxpayer + spouse (if MFJ) + dependents
        let people = 1 + dependents;
        if (filingStatus === "married_joint") people += 1;
        const exemptions = people * params.personalExemptionPerPerson;

        let taxable = Math.max(0, agi - deductions - exemptions);

        const brackets = params.brackets[filingStatus];
        let remaining = taxable;
        let tax = 0;
        let marginalRate = 0;
        const bracketRows = [];

        for (let i = 0; i < brackets.length; i++) {
          const lower = i === 0 ? 0 : brackets[i - 1].upTo;
          const upper = brackets[i].upTo;
          const rate = brackets[i].rate;

          if (remaining <= 0) {
            bracketRows.push({
              range: [lower, upper],
              taxable: 0,
              rate,
              tax: 0,
            });
            continue;
          }

          const taxableInBracket = Math.max(
            0,
            Math.min(upper - lower, remaining)
          );
          const taxInBracket = taxableInBracket * rate;
          tax += taxInBracket;
          remaining -= taxableInBracket;

          if (taxableInBracket > 0) {
            marginalRate = rate;
          }

          bracketRows.push({
            range: [lower, upper],
            taxable: taxableInBracket,
            rate,
            tax: taxInBracket,
          });
        }

        const effectiveRate = totalIncome > 0 ? tax / totalIncome : 0;
        const takeHome = totalIncome - tax;

        // Update UI
        document.getElementById("res-total-income").textContent =
          formatMoney(totalIncome);
        document.getElementById("res-taxable-income").textContent =
          formatMoney(taxable);
        document.getElementById("res-me-tax").textContent = formatMoney(tax);
        document.getElementById("res-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("res-marginal-rate").textContent =
          formatPercent(marginalRate);
        document.getElementById("res-takehome").textContent =
          formatMoney(takeHome);

        const tbody = document.getElementById("bracket-table-body");
        tbody.innerHTML = "";
        bracketRows.forEach((row, idx) => {
          const tr = document.createElement("tr");
          tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";
          const [low, high] = row.range;
          const label =
            high === Infinity
              ? `${formatMoney(low)}+`
              : `${formatMoney(low)} – ${formatMoney(high)}`;
          tr.innerHTML = `
        <td class="px-2 py-1">${label}</td>
        <td class="px-2 py-1 text-right">${formatMoney(row.taxable)}</td>
        <td class="px-2 py-1 text-right">${(row.rate * 100).toFixed(1)}%</td>
        <td class="px-2 py-1 text-right">${formatMoney(row.tax)}</td>
      `;
          tbody.appendChild(tr);
        });

        return { totalIncome, tax };
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        calculateMaineTax();
      });

      document
        .getElementById("deduction-standard")
        .addEventListener("change", () => {
          document.getElementById("itemized-wrapper").classList.add("hidden");
        });
      document
        .getElementById("deduction-itemized")
        .addEventListener("change", () => {
          document
            .getElementById("itemized-wrapper")
            .classList.remove("hidden");
        });

      const incomeSlider = document.getElementById("income-slider");
      const incomeSliderOutput = document.getElementById(
        "income-slider-output"
      );

      incomeSlider.addEventListener("input", () => {
        const val = parseInt(incomeSlider.value, 10) || 0;
        incomeSliderOutput.textContent = formatMoney(val).replace(".00", "");
        document.getElementById("wages").value = val;
        calculateMaineTax();
      });

      // Initial calculation
      window.addEventListener("DOMContentLoaded", () => {
        calculateMaineTax();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
