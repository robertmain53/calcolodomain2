    <script>
      (function () {
        const currencyEl = document.getElementById("currencySymbol");
        const fixedCostsEl = document.getElementById("fixedCosts");
        const pricePerUnitEl = document.getElementById("pricePerUnit");
        const variableCostPerUnitEl = document.getElementById(
          "variableCostPerUnit"
        );
        const taxRateEl = document.getElementById("taxRate");
        const targetProfitEl = document.getElementById("targetProfit");
        const expectedUnitsEl = document.getElementById("expectedUnits");

        const fixedCostsRevEl = document.getElementById("fixedCostsRev");
        const cmRatioEl = document.getElementById("contributionMarginRatio");

        const beUnitsEl = document.getElementById("beUnits");
        const beRevenueEl = document.getElementById("beRevenue");
        const cmPerUnitEl = document.getElementById("cmPerUnit");
        const cmRatioOutEl = document.getElementById("cmRatio");
        const expectedProfitEl = document.getElementById("expectedProfit");
        const expectedProfitAfterTaxEl = document.getElementById(
          "expectedProfitAfterTax"
        );
        const mosUnitsEl = document.getElementById("mosUnits");
        const mosPercentEl = document.getElementById("mosPercent");
        const targetUnitsEl = document.getElementById("targetUnits");
        const targetRevenueEl = document.getElementById("targetRevenue");

        const tabUnits = document.getElementById("tab-units");
        const tabRevenue = document.getElementById("tab-revenue");
        const unitInputs = document.getElementById("unit-inputs");
        const revenueInputs = document.getElementById("revenue-inputs");

        const showScenarioCompareEl = document.getElementById(
          "showScenarioCompare"
        );
        const scenarioContainer = document.getElementById("scenario-container");
        const scenarioSummarySection = document.getElementById(
          "scenario-summary-section"
        );
        const scenarioSummaryBody = document.getElementById(
          "scenarioSummaryBody"
        );

        const copyFromBaseB = document.getElementById("copyFromBaseB");
        const copyFromBaseC = document.getElementById("copyFromBaseC");

        const pricePerUnitBEl = document.getElementById("pricePerUnitB");
        const variableCostPerUnitBEl = document.getElementById(
          "variableCostPerUnitB"
        );
        const fixedCostsBEl = document.getElementById("fixedCostsB");
        const expectedUnitsBEl = document.getElementById("expectedUnitsB");

        const pricePerUnitCEl = document.getElementById("pricePerUnitC");
        const variableCostPerUnitCEl = document.getElementById(
          "variableCostPerUnitC"
        );
        const fixedCostsCEl = document.getElementById("fixedCostsC");
        const expectedUnitsCEl = document.getElementById("expectedUnitsC");

        let mode = "units"; // 'units' or 'revenue'
        let chart;

        function parseNum(el) {
          const v = parseFloat(el.value);
          return isNaN(v) ? 0 : v;
        }

        function fmtCurrency(v) {
          const symbol = currencyEl.value || "$";
          if (!isFinite(v)) return "–";
          return (
            symbol + v.toLocaleString(undefined, { maximumFractionDigits: 2 })
          );
        }

        function fmtNumber(v, digits = 2) {
          if (!isFinite(v)) return "–";
          return v.toLocaleString(undefined, { maximumFractionDigits: digits });
        }

        function fmtPercent(v) {
          if (!isFinite(v)) return "–";
          return v.toFixed(1) + "%";
        }

        function computeBase() {
          const taxRate = parseNum(taxRateEl) / 100;
          const targetProfit = parseNum(targetProfitEl);
          const expectedUnits = Math.max(0, parseNum(expectedUnitsEl));
          let beUnits = NaN,
            beRevenue = NaN,
            cmPerUnit = NaN,
            cmRatio = NaN;
          let expectedProfit = NaN,
            expectedProfitAfterTax = NaN;
          let mosUnits = NaN,
            mosPercent = NaN;
          let targetUnits = NaN,
            targetRevenue = NaN;

          if (mode === "units") {
            const F = Math.max(0, parseNum(fixedCostsEl));
            const P = Math.max(0, parseNum(pricePerUnitEl));
            const V = Math.max(0, parseNum(variableCostPerUnitEl));
            cmPerUnit = P - V;
            cmRatio = P > 0 ? cmPerUnit / P : NaN;

            if (cmPerUnit > 0) {
              beUnits = F / cmPerUnit;
              beRevenue = beUnits * P;
              expectedProfit = expectedUnits * cmPerUnit - F;
              expectedProfitAfterTax = expectedProfit * (1 - taxRate);
              mosUnits = expectedUnits - beUnits;
              mosPercent =
                expectedUnits > 0 ? (mosUnits / expectedUnits) * 100 : NaN;
              if (targetProfit !== 0) {
                targetUnits = (F + targetProfit) / cmPerUnit;
                targetRevenue = targetUnits * P;
              }
            }
          } else {
            const F = Math.max(0, parseNum(fixedCostsRevEl));
            cmRatio = parseNum(cmRatioEl) / 100;
            cmPerUnit = NaN;
            if (cmRatio > 0) {
              beRevenue = F / cmRatio;
              beUnits = NaN;
              const expectedRevenue = expectedUnits; // interpret expectedUnits as revenue in this mode
              expectedProfit = expectedRevenue * cmRatio - F;
              expectedProfitAfterTax = expectedProfit * (1 - taxRate);
              mosUnits = expectedRevenue - beRevenue;
              mosPercent =
                expectedRevenue > 0 ? (mosUnits / expectedRevenue) * 100 : NaN;
              if (targetProfit !== 0) {
                const targetRevenueRaw = (F + targetProfit) / cmRatio;
                targetUnits = NaN;
                targetRevenue = targetRevenueRaw;
              }
            }
          }

          return {
            beUnits,
            beRevenue,
            cmPerUnit,
            cmRatio,
            expectedProfit,
            expectedProfitAfterTax,
            mosUnits,
            mosPercent,
            targetUnits,
            targetRevenue,
          };
        }

        function computeScenarioFromInputs(
          F,
          P,
          V,
          expectedUnits,
          taxRate,
          targetProfit
        ) {
          const cmPerUnit = P - V;
          const cmRatio = P > 0 ? cmPerUnit / P : NaN;
          let beUnits = NaN,
            beRevenue = NaN,
            expectedProfit = NaN,
            expectedProfitAfterTax = NaN;
          let mosUnits = NaN,
            mosPercent = NaN,
            targetUnits = NaN,
            targetRevenue = NaN;

          if (cmPerUnit > 0) {
            beUnits = F / cmPerUnit;
            beRevenue = beUnits * P;
            expectedProfit = expectedUnits * cmPerUnit - F;
            expectedProfitAfterTax = expectedProfit * (1 - taxRate);
            mosUnits = expectedUnits - beUnits;
            mosPercent =
              expectedUnits > 0 ? (mosUnits / expectedUnits) * 100 : NaN;
            if (targetProfit !== 0) {
              targetUnits = (F + targetProfit) / cmPerUnit;
              targetRevenue = targetUnits * P;
            }
          }

          return {
            beUnits,
            beRevenue,
            cmPerUnit,
            cmRatio,
            expectedProfit,
            expectedProfitAfterTax,
            mosUnits,
            mosPercent,
            targetUnits,
            targetRevenue,
          };
        }

        function updateOutputs() {
          const base = computeBase();

          beUnitsEl.textContent = isNaN(base.beUnits)
            ? "–"
            : fmtNumber(base.beUnits, 1);
          beRevenueEl.textContent = isNaN(base.beRevenue)
            ? "–"
            : fmtCurrency(base.beRevenue);
          cmPerUnitEl.textContent = isNaN(base.cmPerUnit)
            ? mode === "units"
              ? fmtCurrency(0)
              : "–"
            : fmtCurrency(base.cmPerUnit);
          cmRatioOutEl.textContent = isNaN(base.cmRatio)
            ? "–"
            : fmtPercent(base.cmRatio * 100);
          expectedProfitEl.textContent = isNaN(base.expectedProfit)
            ? "–"
            : fmtCurrency(base.expectedProfit);
          expectedProfitAfterTaxEl.textContent = isNaN(
            base.expectedProfitAfterTax
          )
            ? "–"
            : fmtCurrency(base.expectedProfitAfterTax);
          mosUnitsEl.textContent = isNaN(base.mosUnits)
            ? "–"
            : fmtNumber(base.mosUnits, 1);
          mosPercentEl.textContent = isNaN(base.mosPercent)
            ? "–"
            : fmtPercent(base.mosPercent);
          targetUnitsEl.textContent = isNaN(base.targetUnits)
            ? "–"
            : fmtNumber(base.targetUnits, 1);
          targetRevenueEl.textContent = isNaN(base.targetRevenue)
            ? "–"
            : fmtCurrency(base.targetRevenue);

          updateChart(base);
          updateScenarioSummary(base);
        }

        function updateChart(base) {
          const ctx = document.getElementById("profitChart").getContext("2d");
          const symbol = currencyEl.value || "$";

          let labels = [];
          let profitData = [];
          let maxUnits = 0;

          if (mode === "units") {
            const expectedUnits = Math.max(0, parseNum(expectedUnitsEl));
            const F = Math.max(0, parseNum(fixedCostsEl));
            const P = Math.max(0, parseNum(pricePerUnitEl));
            const V = Math.max(0, parseNum(variableCostPerUnitEl));
            const cmPerUnit = P - V;

            if (!(cmPerUnit > 0)) {
              labels = [0, 1];
              profitData = [0, 0];
            } else {
              const beUnits = base.beUnits || 0;
              maxUnits = Math.max(expectedUnits, beUnits) * 1.5 || 10;
              maxUnits = Math.max(maxUnits, 10);
              const step = maxUnits / 20;
              for (let q = 0; q <= maxUnits; q += step) {
                labels.push(Math.round(q));
                profitData.push(q * cmPerUnit - F);
              }
            }
          } else {
            const expectedRevenue = Math.max(0, parseNum(expectedUnitsEl));
            const F = Math.max(0, parseNum(fixedCostsRevEl));
            const cmRatio = parseNum(cmRatioEl) / 100;

            if (!(cmRatio > 0)) {
              labels = [0, 1];
              profitData = [0, 0];
            } else {
              const beRevenue = base.beRevenue || 0;
              const maxRevenue =
                Math.max(expectedRevenue, beRevenue) * 1.5 || 10000;
              const step = maxRevenue / 20;
              for (let r = 0; r <= maxRevenue; r += step) {
                labels.push(Math.round(r));
                profitData.push(r * cmRatio - F);
              }
            }
          }

          if (chart) {
            chart.destroy();
          }

          chart = new Chart(ctx, {
            type: "line",
            data: {
              labels: labels,
              datasets: [
                {
                  label: "Profit",
                  data: profitData,
                  borderColor: "#2563eb",
                  backgroundColor: "rgba(37, 99, 235, 0.1)",
                  tension: 0.1,
                  fill: true,
                  pointRadius: 0,
                },
              ],
            },
            options: {
              responsive: true,
              maintainAspectRatio: false,
              scales: {
                x: {
                  title: {
                    display: true,
                    text: mode === "units" ? "Units sold" : "Revenue",
                  },
                  ticks: {
                    maxTicksLimit: 6,
                  },
                },
                y: {
                  title: {
                    display: true,
                    text: "Profit (" + symbol + ")",
                  },
                  ticks: {
                    maxTicksLimit: 6,
                    callback: function (value) {
                      return symbol + value.toLocaleString();
                    },
                  },
                },
              },
              plugins: {
                legend: { display: false },
                tooltip: {
                  callbacks: {
                    label: function (context) {
                      return (
                        "Profit: " +
                        symbol +
                        context.parsed.y.toLocaleString(undefined, {
                          maximumFractionDigits: 2,
                        })
                      );
                    },
                  },
                },
              },
            },
          });
        }

        function updateScenarioSummary(base) {
          if (!showScenarioCompareEl.checked || mode !== "units") {
            scenarioSummarySection.classList.add("hidden");
            return;
          }

          const taxRate = parseNum(taxRateEl) / 100;
          const targetProfit = parseNum(targetProfitEl);

          const baseF = Math.max(0, parseNum(fixedCostsEl));
          const baseP = Math.max(0, parseNum(pricePerUnitEl));
          const baseV = Math.max(0, parseNum(variableCostPerUnitEl));
          const baseExpectedUnits = Math.max(0, parseNum(expectedUnitsEl));

          const F_B =
            fixedCostsBEl.value === ""
              ? baseF
              : Math.max(0, parseNum(fixedCostsBEl));
          const P_B =
            pricePerUnitBEl.value === ""
              ? baseP
              : Math.max(0, parseNum(pricePerUnitBEl));
          const V_B =
            variableCostPerUnitBEl.value === ""
              ? baseV
              : Math.max(0, parseNum(variableCostPerUnitBEl));
          const expectedUnitsB =
            expectedUnitsBEl.value === ""
              ? baseExpectedUnits
              : Math.max(0, parseNum(expectedUnitsBEl));

          const F_C =
            fixedCostsCEl.value === ""
              ? baseF
              : Math.max(0, parseNum(fixedCostsCEl));
          const P_C =
            pricePerUnitCEl.value === ""
              ? baseP
              : Math.max(0, parseNum(pricePerUnitCEl));
          const V_C =
            variableCostPerUnitCEl.value === ""
              ? baseV
              : Math.max(0, parseNum(variableCostPerUnitCEl));
          const expectedUnitsC =
            expectedUnitsCEl.value === ""
              ? baseExpectedUnits
              : Math.max(0, parseNum(expectedUnitsCEl));

          const scenarioA = base;
          const scenarioB = computeScenarioFromInputs(
            F_B,
            P_B,
            V_B,
            expectedUnitsB,
            taxRate,
            targetProfit
          );
          const scenarioC = computeScenarioFromInputs(
            F_C,
            P_C,
            V_C,
            expectedUnitsC,
            taxRate,
            targetProfit
          );

          const rows = [
            {
              label: "Price / unit",
              a: fmtCurrency(baseP),
              b: fmtCurrency(P_B),
              c: fmtCurrency(P_C),
            },
            {
              label: "Variable cost / unit",
              a: fmtCurrency(baseV),
              b: fmtCurrency(V_B),
              c: fmtCurrency(V_C),
            },
            {
              label: "Fixed costs",
              a: fmtCurrency(baseF),
              b: fmtCurrency(F_B),
              c: fmtCurrency(F_C),
            },
            {
              label: "Contribution margin / unit",
              a: isNaN(scenarioA.cmPerUnit)
                ? "–"
                : fmtCurrency(scenarioA.cmPerUnit),
              b: isNaN(scenarioB.cmPerUnit)
                ? "–"
                : fmtCurrency(scenarioB.cmPerUnit),
              c: isNaN(scenarioC.cmPerUnit)
                ? "–"
                : fmtCurrency(scenarioC.cmPerUnit),
            },
            {
              label: "Contribution margin ratio",
              a: isNaN(scenarioA.cmRatio)
                ? "–"
                : fmtPercent(scenarioA.cmRatio * 100),
              b: isNaN(scenarioB.cmRatio)
                ? "–"
                : fmtPercent(scenarioB.cmRatio * 100),
              c: isNaN(scenarioC.cmRatio)
                ? "–"
                : fmtPercent(scenarioC.cmRatio * 100),
            },
            {
              label: "Break-even units",
              a: isNaN(scenarioA.beUnits)
                ? "–"
                : fmtNumber(scenarioA.beUnits, 1),
              b: isNaN(scenarioB.beUnits)
                ? "–"
                : fmtNumber(scenarioB.beUnits, 1),
              c: isNaN(scenarioC.beUnits)
                ? "–"
                : fmtNumber(scenarioC.beUnits, 1),
            },
            {
              label: "Break-even revenue",
              a: isNaN(scenarioA.beRevenue)
                ? "–"
                : fmtCurrency(scenarioA.beRevenue),
              b: isNaN(scenarioB.beRevenue)
                ? "–"
                : fmtCurrency(scenarioB.beRevenue),
              c: isNaN(scenarioC.beRevenue)
                ? "–"
                : fmtCurrency(scenarioC.beRevenue),
            },
            {
              label: "Expected profit (before tax)",
              a: isNaN(scenarioA.expectedProfit)
                ? "–"
                : fmtCurrency(scenarioA.expectedProfit),
              b: isNaN(scenarioB.expectedProfit)
                ? "–"
                : fmtCurrency(scenarioB.expectedProfit),
              c: isNaN(scenarioC.expectedProfit)
                ? "–"
                : fmtCurrency(scenarioC.expectedProfit),
            },
            {
              label: "Margin of safety (units)",
              a: isNaN(scenarioA.mosUnits)
                ? "–"
                : fmtNumber(scenarioA.mosUnits, 1),
              b: isNaN(scenarioB.mosUnits)
                ? "–"
                : fmtNumber(scenarioB.mosUnits, 1),
              c: isNaN(scenarioC.mosUnits)
                ? "–"
                : fmtNumber(scenarioC.mosUnits, 1),
            },
          ];

          scenarioSummaryBody.innerHTML = rows
            .map(
              (row) => `
      <tr>
        <td class="px-3 py-2 font-medium text-gray-700">${row.label}</td>
        <td class="px-3 py-2">${row.a}</td>
        <td class="px-3 py-2">${row.b}</td>
        <td class="px-3 py-2">${row.c}</td>
      </tr>
    `
            )
            .join("");

          scenarioSummarySection.classList.remove("hidden");
        }

        function setMode(newMode) {
          mode = newMode;
          if (mode === "units") {
            tabUnits.classList.add("tab-active");
            tabUnits.classList.remove("tab-inactive");
            tabRevenue.classList.add("tab-inactive");
            tabRevenue.classList.remove("tab-active");
            unitInputs.classList.remove("hidden");
            revenueInputs.classList.add("hidden");
          } else {
            tabRevenue.classList.add("tab-active");
            tabRevenue.classList.remove("tab-inactive");
            tabUnits.classList.add("tab-inactive");
            tabUnits.classList.remove("tab-active");
            unitInputs.classList.add("hidden");
            revenueInputs.classList.remove("hidden");
          }
          updateOutputs();
        }

        tabUnits.addEventListener("click", () => setMode("units"));
        tabRevenue.addEventListener("click", () => setMode("revenue"));

        showScenarioCompareEl.addEventListener("change", () => {
          if (showScenarioCompareEl.checked) {
            scenarioContainer.classList.remove(
              "opacity-40",
              "pointer-events-none"
            );
          } else {
            scenarioContainer.classList.add(
              "opacity-40",
              "pointer-events-none"
            );
            scenarioSummarySection.classList.add("hidden");
          }
          updateOutputs();
        });

        copyFromBaseB.addEventListener("click", () => {
          fixedCostsBEl.value = fixedCostsEl.value;
          pricePerUnitBEl.value = pricePerUnitEl.value;
          variableCostPerUnitBEl.value = variableCostPerUnitEl.value;
          expectedUnitsBEl.value = expectedUnitsEl.value;
          updateOutputs();
        });

        copyFromBaseC.addEventListener("click", () => {
          fixedCostsCEl.value = fixedCostsEl.value;
          pricePerUnitCEl.value = pricePerUnitEl.value;
          variableCostPerUnitCEl.value = variableCostPerUnitEl.value;
          expectedUnitsCEl.value = expectedUnitsEl.value;
          updateOutputs();
        });

        const inputs = [
          currencyEl,
          fixedCostsEl,
          pricePerUnitEl,
          variableCostPerUnitEl,
          taxRateEl,
          targetProfitEl,
          expectedUnitsEl,
          fixedCostsRevEl,
          cmRatioEl,
          fixedCostsBEl,
          pricePerUnitBEl,
          variableCostPerUnitBEl,
          expectedUnitsBEl,
          fixedCostsCEl,
          pricePerUnitCEl,
          variableCostPerUnitCEl,
          expectedUnitsCEl,
        ];

        inputs.forEach((el) => {
          if (!el) return;
          el.addEventListener("input", updateOutputs);
        });

        document.addEventListener("DOMContentLoaded", updateOutputs);
      })();
    </script>
  
