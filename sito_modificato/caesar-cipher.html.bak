            document.getElementById("normalized-shift").textContent =
              String(shift);
            const alphabet = buildAlphabet();
            const keepNonletters =
              document.getElementById("keep-nonletters").checked;
            const preserveCase =
              document.getElementById("preserve-case").checked;
            const text = document.getElementById("input-text").value || "";
            const out = caesarTransform(text, -shift, alphabet, {
              keepNonletters,
              preserveCase,
            });
            document.getElementById("output-text").value = out;
            document.getElementById("mode").value = "decode";
          });

        document
