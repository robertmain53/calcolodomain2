      function scoreTextByFrequency(text, lang) {
        const profile = freqProfiles[lang] || freqProfiles.en;
        const counts = {};
        let total = 0;
        for (const ch of text.toUpperCase()) {
          if (ch >= "A" && ch <= "Z") {
            counts[ch] = (counts[ch] || 0) + 1;
            total++;
          }
        }
        if (total === 0) return Number.POSITIVE_INFINITY;
        // Chi-squared statistic
        let chi2 = 0;
        for (let c = 65; c <= 90; c++) {
          const letter = String.fromCharCode(c);
          const observed = counts[letter] || 0;
          const expected = ((profile[letter] || 0) / 100) * total;
          if (expected > 0) {
            const diff = observed - expected;
            chi2 += (diff * diff) / expected;
          }
        }
        return chi2;
      }

      function runCaesar() {
        const mode = document.getElementById("mode").value;
        const alphabet = buildAlphabet();
        const keepNonletters =
          document.getElementById("keep-nonletters").checked;
        const preserveCase = document.getElementById("preserve-case").checked;
        const text = document.getElementById("input-text").value || "";
        const lang = document.getElementById("language").value;
        const n = alphabet.length;

        const resultsSection = document.getElementById("results-section");
        const resultsBody = document.getElementById("results-body");
        const resultsSummary = document.getElementById("results-summary");
        resultsSection.classList.add("hidden");
        resultsBody.innerHTML = "";
        resultsSummary.textContent = "";

        if (!text) {
          document.getElementById("output-text").value = "";
          return;
        }

        if (mode === "encode" || mode === "decode") {
          let k = parseInt(document.getElementById("shift").value || "0", 10);
          if (!Number.isFinite(k)) k = 0;
          if (mode === "decode") k = -k;
          const norm = normalizeShift(k, n);
          document.getElementById("normalized-shift").textContent =
            String(norm);
          const out = caesarTransform(text, k, alphabet, {
            keepNonletters,
            preserveCase,
          });
          document.getElementById("output-text").value = out;
          return;
        }

        // brute-force / auto-crack
        const candidates = [];
        for (let k = 0; k < n; k++) {
          const out = caesarTransform(text, -k, alphabet, {
            keepNonletters,
            preserveCase,
          });
          const score = scoreTextByFrequency(out, lang);
          candidates.push({ shift: k, text: out, score });
        }

        if (mode === "auto") {
          candidates.sort((a, b) => a.score - b.score);
        } else {
          // brute-force: keep natural order by shift
          candidates.sort((a, b) => a.shift - b.shift);
        }

        const top = candidates.slice(0, Math.min(candidates.length, 26));
        const rows = [];
        top.forEach((c, idx) => {
          const preview = c.text.replace(/\s+/g, " ").slice(0, 80);
          rows.push(
            `<tr class="${idx % 2 ? "bg-gray-50" : ""}">
          <td class="px-2 py-1">${idx + 1}</td>
          <td class="px-2 py-1 mono">${c.shift}</td>
          <td class="px-2 py-1 mono">${
            c.score === Infinity ? "—" : c.score.toFixed(2)
          }</td>
          <td class="px-2 py-1 mono">${preview
            .replace(/</g, "&lt;")
            .replace(/>/g, "&gt;")}</td>
          <td class="px-2 py-1">
            <button type="button" class="px-2 py-1 border rounded text-xs" data-apply-shift="${
              c.shift
            }">Use this</button>
          </td>
        </tr>`
          );
        });
        resultsBody.innerHTML = rows.join("");
        resultsSummary.textContent =
          mode === "auto"
            ? `Auto‑crack tried all ${n} shifts and ranked them using ${lang.toUpperCase()} letter frequencies. Click “Use this” to apply a candidate.`
            : `Brute‑force mode shows all ${n} possible shifts. Click “Use this” to copy a candidate into the output.`;
        resultsSection.classList.remove("hidden");

        if (top.length > 0) {
          document.getElementById("output-text").value = top[0].text;
          document.getElementById("shift").value = top[0].shift;
          document.getElementById("normalized-shift").textContent = String(
            top[0].shift
          );
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const modeEl = document.getElementById("mode");
        const shiftWrapper = document.getElementById("shift-wrapper");
        const alphabetEl = document.getElementById("alphabet");
        const customAlphabetEl = document.getElementById("custom-alphabet");

        modeEl.addEventListener("change", () => {
          const mode = modeEl.value;
          if (mode === "encode" || mode === "decode") {
            shiftWrapper.classList.remove("opacity-50");
          } else {
            shiftWrapper.classList.add("opacity-50");
          }
        });

        alphabetEl.addEventListener("change", () => {
          if (alphabetEl.value === "custom") {
            customAlphabetEl.classList.remove("hidden");
            customAlphabetEl.focus();
          } else {
            customAlphabetEl.classList.add("hidden");
          }
        });

        document.getElementById("shift-left").addEventListener("click", () => {
          const n = buildAlphabet().length;
          let v = parseInt(document.getElementById("shift").value || "0", 10);
          if (!Number.isFinite(v)) v = 0;
          v -= 1;
          document.getElementById("shift").value = v;
          document.getElementById("normalized-shift").textContent = String(
            normalizeShift(v, n)
          );
        });

        document.getElementById("shift-right").addEventListener("click", () => {
          const n = buildAlphabet().length;
          let v = parseInt(document.getElementById("shift").value || "0", 10);
          if (!Number.isFinite(v)) v = 0;
          v += 1;
          document.getElementById("shift").value = v;
          document.getElementById("normalized-shift").textContent = String(
            normalizeShift(v, n)
          );
        });

        document.getElementById("run-btn").addEventListener("click", runCaesar);
        document.getElementById("clear-btn").addEventListener("click", () => {
          document.getElementById("input-text").value = "";
          document.getElementById("output-text").value = "";
          document.getElementById("results-section").classList.add("hidden");
          document.getElementById("results-body").innerHTML = "";
          document.getElementById("results-summary").textContent = "";
          updateCounts();
        });

        document
          .getElementById("copy-output")
          .addEventListener("click", async () => {
            const out = document.getElementById("output-text").value;
            if (!out) return;
            try {
