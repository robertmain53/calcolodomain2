      // Core Caesar cipher logic
      function buildAlphabet() {
        const preset = document.getElementById("alphabet").value;
        if (preset === "latin") return "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
        if (preset === "latin-extended")
          return "ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz";
        if (preset === "digits") return "0123456789";
        // custom
        const custom = document.getElementById("custom-alphabet").value || "";
        // remove duplicates while preserving order
        const seen = new Set();
        let result = "";
        for (const ch of custom) {
          if (!seen.has(ch)) {
            seen.add(ch);
            result += ch;
          }
        }
        return result || "ABCDEFGHIJKLMNOPQRSTUVWXYZ";
      }

      function normalizeShift(k, n) {
        if (n === 0) return 0;
        let s = k % n;
        if (s < 0) s += n;
        return s;
      }

      function caesarTransform(text, shift, alphabet, options) {
        const keepNon = options.keepNonletters;
        const preserveCase = options.preserveCase;
        const alpha = alphabet;
        const n = alpha.length;
        const indexMap = new Map();
        for (let i = 0; i < n; i++) indexMap.set(alpha[i], i);

        const upperAlpha = alpha.toUpperCase();
        const lowerAlpha = alpha.toLowerCase();
        const upperMap = new Map();
        const lowerMap = new Map();
        for (let i = 0; i < upperAlpha.length; i++)
          upperMap.set(upperAlpha[i], i);
        for (let i = 0; i < lowerAlpha.length; i++)
          lowerMap.set(lowerAlpha[i], i);

        let out = "";
        for (const ch of text) {
          let idx,
            baseAlpha,
            isUpper = false;
          if (preserveCase && upperMap.has(ch)) {
            idx = upperMap.get(ch);
            baseAlpha = upperAlpha;
            isUpper = true;
          } else if (preserveCase && lowerMap.has(ch)) {
            idx = lowerMap.get(ch);
            baseAlpha = lowerAlpha;
          } else if (!preserveCase && indexMap.has(ch)) {
            idx = indexMap.get(ch);
            baseAlpha = alpha;
          } else {
            out += keepNon ? ch : "";
            continue;
          }
          const newIdx = normalizeShift(idx + shift, baseAlpha.length);
          out += baseAlpha[newIdx];
        }
        return out;
      }

