    <script>
      (function () {
        const grossInput = document.getElementById("gross-pay");
        const payFreqSelect = document.getElementById("pay-frequency");
        const jurisdictionSelect = document.getElementById("jurisdiction");
        const taxTypeRadios = document.querySelectorAll(
          'input[name="tax-type"]'
        );
        const percentRateInput = document.getElementById("percent-rate");
        const flatRateInput = document.getElementById("flat-rate");
        const pretaxInput = document.getElementById("pretax-deductions");
        const otherLocalInput = document.getElementById("other-local-taxes");
        const percentWrapper = document.getElementById("percent-rate-wrapper");
        const flatWrapper = document.getElementById("flat-rate-wrapper");
        const errorEl = document.getElementById("calc-error");

        const resGross = document.getElementById("res-gross");
        const resPretax = document.getElementById("res-pretax");
        const resTaxable = document.getElementById("res-taxable");
        const resOccTax = document.getElementById("res-occ-tax");
        const resOtherLocal = document.getElementById("res-other-local");
        const resNet = document.getElementById("res-net");
        const resEffectiveRate = document.getElementById("res-effective-rate");
        const resAnnualGross = document.getElementById("res-annual-gross");
        const resAnnualOcc = document.getElementById("res-annual-occ");
        const resAnnualOther = document.getElementById("res-annual-other");
        const resAnnualTotalLocal = document.getElementById(
          "res-annual-total-local"
        );

        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        const jurisdictionRates = {
          lexington: 2.25,
          louisville: 2.2,
          bowling_green: 1.85,
          covington: 2.45,
          henderson_city: 1.5,
          hardin_county: 1.0,
        };

        function formatCurrency(value) {
          if (!isFinite(value)) return "$0.00";
          return "$" + value.toFixed(2).replace(/\B(?=(\d{3})+(?!\d))/g, ",");
        }

        function formatPercent(value) {
          if (!isFinite(value)) return "0%";
          return value.toFixed(2).replace(/\.00$/, "") + "%";
        }

        function getPeriodsPerYear(freq) {
          switch (freq) {
            case "hourly":
              return 2080;
            case "weekly":
              return 52;
            case "biweekly":
              return 26;
            case "semimonthly":
              return 24;
            case "monthly":
              return 12;
            case "annual":
              return 1;
            default:
              return 26;
          }
        }

        function syncJurisdictionRate() {
          const j = jurisdictionSelect.value;
          if (j === "custom") return;
          const rate = jurisdictionRates[j];
          if (typeof rate === "number") {
            percentRateInput.value = rate.toFixed(2);
          }
        }

        jurisdictionSelect.addEventListener("change", () => {
          syncJurisdictionRate();
        });

        taxTypeRadios.forEach((radio) => {
          radio.addEventListener("change", () => {
            const type = document.querySelector(
              'input[name="tax-type"]:checked'
            ).value;
            if (type === "percent") {
              percentWrapper.classList.remove("hidden");
              flatWrapper.classList.add("hidden");
            } else {
              percentWrapper.classList.add("hidden");
              flatWrapper.classList.remove("hidden");
            }
          });
        });

        function calculate() {
          errorEl.textContent = "";

          const gross = parseFloat(grossInput.value);
          const pretax = parseFloat(pretaxInput.value) || 0;
          const otherLocalRate = parseFloat(otherLocalInput.value) || 0;
          const freq = payFreqSelect.value;
          const taxType = document.querySelector(
            'input[name="tax-type"]:checked'
          ).value;

          if (isNaN(gross) || gross < 0) {
            errorEl.textContent = "Please enter a valid gross pay amount.";
            return;
          }
          if (pretax < 0) {
            errorEl.textContent = "Pre-tax deductions cannot be negative.";
            return;
          }

          let occTax = 0;
          let taxableWages = Math.max(0, gross - pretax);

          if (taxType === "percent") {
            const rate = parseFloat(percentRateInput.value);
            if (isNaN(rate) || rate < 0) {
              errorEl.textContent =
                "Please enter a valid occupational tax percentage.";
              return;
            }
            occTax = taxableWages * (rate / 100);
          } else {
            const flat = parseFloat(flatRateInput.value);
            if (isNaN(flat) || flat < 0) {
              errorEl.textContent =
                "Please enter a valid flat occupational tax amount.";
              return;
            }
            occTax = flat;
          }

          const otherLocalTax = taxableWages * (otherLocalRate / 100);
          const netPay = gross - occTax - otherLocalTax;

          const periods = getPeriodsPerYear(freq);
          const annualGross =
            freq === "hourly" ? gross * periods : gross * periods;
          const annualOcc = occTax * periods;
          const annualOther = otherLocalTax * periods;
          const annualTotalLocal = annualOcc + annualOther;

          const effectiveRate =
            taxableWages > 0 ? (occTax / taxableWages) * 100 : 0;

          resGross.textContent = formatCurrency(gross);
          resPretax.textContent = formatCurrency(pretax);
          resTaxable.textContent = formatCurrency(taxableWages);
          resOccTax.textContent = formatCurrency(occTax);
          resOtherLocal.textContent = formatCurrency(otherLocalTax);
          resNet.textContent = formatCurrency(netPay);
          resEffectiveRate.textContent = formatPercent(effectiveRate);

          resAnnualGross.textContent = formatCurrency(annualGross);
          resAnnualOcc.textContent = formatCurrency(annualOcc);
          resAnnualOther.textContent = formatCurrency(annualOther);
          resAnnualTotalLocal.textContent = formatCurrency(annualTotalLocal);
        }

        function resetCalculator() {
          payFreqSelect.value = "biweekly";
          grossInput.value = 2000;
          jurisdictionSelect.value = "custom";
          percentRateInput.value = 2.25;
          flatRateInput.value = 0;
          pretaxInput.value = 0;
          otherLocalInput.value = 0;
          document.querySelector(
            'input[name="tax-type"][value="percent"]'
          ).checked = true;
          percentWrapper.classList.remove("hidden");
          flatWrapper.classList.add("hidden");
          errorEl.textContent = "";
          calculate();
        }

        calculateBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetCalculator);

        [
          grossInput,
          pretaxInput,
          percentRateInput,
          flatRateInput,
          otherLocalInput,
          payFreqSelect,
        ].forEach((el) => {
          el.addEventListener("change", calculate);
          el.addEventListener("keyup", (e) => {
            if (e.key === "Enter") calculate();
          });
        });

        // Initial calculation
        calculate();
      })();
    </script>

