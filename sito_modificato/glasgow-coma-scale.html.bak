    <script>
      // GCS calculator logic
      const adultOptions = {
        eye: [
          {
            score: 4,
            label: "E4 – Spontaneous",
            desc: "Opens eyes spontaneously",
          },
          { score: 3, label: "E3 – To speech", desc: "Opens eyes to speech" },
          { score: 2, label: "E2 – To pain", desc: "Opens eyes to pain" },
          { score: 1, label: "E1 – None", desc: "No eye opening" },
        ],
        verbal: [
          {
            score: 5,
            label: "V5 – Oriented",
            desc: "Converses normally, oriented",
          },
          {
            score: 4,
            label: "V4 – Confused",
            desc: "Converses but disoriented",
          },
          {
            score: 3,
            label: "V3 – Inappropriate words",
            desc: "Random or exclamatory words",
          },
          {
            score: 2,
            label: "V2 – Incomprehensible sounds",
            desc: "Moans, groans",
          },
          { score: 1, label: "V1 – None", desc: "No verbal response" },
        ],
        motor: [
          {
            score: 6,
            label: "M6 – Obeys commands",
            desc: "Performs simple tasks on request",
          },
          {
            score: 5,
            label: "M5 – Localizes pain",
            desc: "Purposeful movement towards pain",
          },
          {
            score: 4,
            label: "M4 – Withdraws from pain",
            desc: "Flexion withdrawal from pain",
          },
          {
            score: 3,
            label: "M3 – Abnormal flexion",
            desc: "Decorticate response to pain",
          },
          {
            score: 2,
            label: "M2 – Abnormal extension",
            desc: "Decerebrate response to pain",
          },
          { score: 1, label: "M1 – None", desc: "No motor response" },
        ],
      };

      const pedsOptions = {
        eye: adultOptions.eye, // same descriptors
        verbal: [
          {
            score: 5,
            label: "V5 – Smiles / coos / oriented",
            desc: "Smiles, coos, follows objects, interacts",
          },
          {
            score: 4,
            label: "V4 – Cries but consolable",
            desc: "Irritable cry but consolable",
          },
          {
            score: 3,
            label: "V3 – Inconsistently inconsolable",
            desc: "Persistent or inappropriate crying/screaming",
          },
          {
            score: 2,
            label: "V2 – Moans to pain",
            desc: "Moans or cries only to pain",
          },
          { score: 1, label: "V1 – None", desc: "No vocal response" },
        ],
        motor: [
          {
            score: 6,
            label: "M6 – Spontaneous / obeys",
            desc: "Spontaneous, purposeful movements or obeys commands",
          },
          {
            score: 5,
            label: "M5 – Localizes pain",
            desc: "Reaches towards painful stimulus",
          },
          {
            score: 4,
            label: "M4 – Withdraws from pain",
            desc: "Pulls limb away from pain",
          },
          {
            score: 3,
            label: "M3 – Abnormal flexion",
            desc: "Abnormal flexion to pain",
          },
          {
            score: 2,
            label: "M2 – Abnormal extension",
            desc: "Abnormal extension to pain",
          },
          { score: 1, label: "M1 – None", desc: "No motor response" },
        ],
      };

      let currentMode = "adult";
      let selected = { eye: null, verbal: null, motor: null };

      const eyeContainer = document.getElementById("eye-options");
      const verbalContainer = document.getElementById("verbal-options");
      const motorContainer = document.getElementById("motor-options");

      function renderOptions() {
        const opts = currentMode === "adult" ? adultOptions : pedsOptions;
        renderGroup(eyeContainer, opts.eye, "eye");
        renderGroup(verbalContainer, opts.verbal, "verbal");
        renderGroup(motorContainer, opts.motor, "motor");
        // reset selections
        selected = { eye: null, verbal: null, motor: null };
        updateScores();
      }

      function renderGroup(container, items, key) {
        container.innerHTML = "";
        items.forEach((item) => {
          const btn = document.createElement("button");
          btn.type = "button";
          btn.className =
            "gcs-option w-full text-left border border-gray-300 rounded-md px-3 py-2 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-blue-500";
          btn.dataset.group = key;
          btn.dataset.score = item.score;
          btn.innerHTML = `<div class="font-medium">${item.label}</div><div class="text-xs text-gray-600">${item.desc}</div>`;
          btn.addEventListener("click", () => {
            selected[key] = item.score;
            // clear active state in group
            container.querySelectorAll(".gcs-option").forEach((el) => {
              el.classList.remove("border-blue-600", "bg-blue-50");
            });
            btn.classList.add("border-blue-600", "bg-blue-50");
            updateScores();
          });
          container.appendChild(btn);
        });
      }

      function updateScores() {
        const eyeScore = selected.eye;
        const verbalScore = selected.verbal;
        const motorScore = selected.motor;

        document.getElementById("score-eye").textContent =
          "Score: " + (eyeScore != null ? eyeScore : "–");
        document.getElementById("score-verbal").textContent =
          "Score: " + (verbalScore != null ? verbalScore : "–");
        document.getElementById("score-motor").textContent =
          "Score: " + (motorScore != null ? motorScore : "–");

        const totalEl = document.getElementById("total-gcs");
        const summaryEl = document.getElementById("component-summary");
        const severityLabel = document.getElementById("severity-label");
        const severityDetail = document.getElementById("severity-detail");

        if (eyeScore == null || verbalScore == null || motorScore == null) {
          totalEl.textContent = "–";
          summaryEl.textContent = "E – / V – / M –";
          severityLabel.textContent = "Incomplete data";
          severityDetail.textContent =
            "Select eye, verbal, and motor responses to see the total score and interpretation.";
          return;
        }

        const total = eyeScore + verbalScore + motorScore;
        totalEl.textContent = total;
        summaryEl.textContent = `E ${eyeScore} / V ${verbalScore} / M ${motorScore}`;

        let category, detail, colorClasses;
        if (total >= 13) {
          category = "Mild impairment (GCS 13–15)";
          detail =
            "Consistent with mild brain injury or near-normal consciousness. Continue monitoring and evaluate for subtle deficits.";
          colorClasses = ["text-green-700"];
        } else if (total >= 9) {
          category = "Moderate impairment (GCS 9–12)";
          detail =
            "Moderate reduction in consciousness. Requires close observation, urgent imaging, and specialist input according to local protocols.";
          colorClasses = ["text-yellow-700"];
        } else {
          category = "Severe impairment (GCS 3–8)";
          detail =
            "Severe brain injury or coma. High risk of airway compromise and poor outcome. Typically requires urgent airway assessment and neurosurgical evaluation.";
          colorClasses = ["text-red-700"];
        }

        severityLabel.textContent = category;
        severityDetail.textContent = detail;
        severityLabel.className =
          "mt-1 text-sm font-semibold " + colorClasses.join(" ");
      }

      document.getElementById("btn-adult").addEventListener("click", () => {
        currentMode = "adult";
        document.getElementById("btn-adult").className =
          "px-3 py-1.5 rounded-full text-sm font-medium border border-blue-600 text-white bg-blue-600";
        document.getElementById("btn-peds").className =
          "px-3 py-1.5 rounded-full text-sm font-medium border border-gray-300 text-gray-700 bg-white hover:bg-gray-50";
        document.getElementById("patient-note").textContent =
          "Using standard adult GCS descriptors.";
        renderOptions();
      });

      document.getElementById("btn-peds").addEventListener("click", () => {
        currentMode = "peds";
        document.getElementById("btn-peds").className =
          "px-3 py-1.5 rounded-full text-sm font-medium border border-blue-600 text-white bg-blue-600";
        document.getElementById("btn-adult").className =
          "px-3 py-1.5 rounded-full text-sm font-medium border border-gray-300 text-gray-700 bg-white hover:bg-gray-50";
        document.getElementById("patient-note").textContent =
          "Using pediatric GCS descriptors for infants / young children.";
        renderOptions();
      });

      // Initial render
      renderOptions();
    </script>

