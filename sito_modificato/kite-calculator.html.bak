    <script>
      // Utility helpers
      function parsePositive(value) {
        const v = parseFloat(value);
        return isFinite(v) && v > 0 ? v : null;
      }

      function toDegrees(rad) {
        return (rad * 180) / Math.PI;
      }

      function toRadians(deg) {
        return (deg * Math.PI) / 180;
      }

      function formatNumber(val, decimals) {
        if (val === null || !isFinite(val)) return "–";
        return Number(val).toFixed(decimals);
      }

      // Main calculation logic
      function computeKite() {
        const unit = document.getElementById("unit-select").value || "";
        const aIn = parsePositive(document.getElementById("side-a").value);
        const bIn = parsePositive(document.getElementById("side-b").value);
        const d1In = parsePositive(document.getElementById("diag-d1").value);
        const d2In = parsePositive(document.getElementById("diag-d2").value);
        const thetaDegIn = parsePositive(
          document.getElementById("angle-theta").value
        );

        const errEl = document.getElementById("kite-error");
        errEl.classList.add("hidden");
        errEl.textContent = "";

        let a = aIn,
          b = bIn,
          d1 = d1In,
          d2 = d2In,
          thetaDeg = thetaDegIn;
        let area = null,
          perimeter = null,
          phiDeg = null,
          inradius = null,
          circumradius = null;

        try {
          // Case 1: both diagonals known
          if (d1 && d2 && !a && !b && !thetaDeg) {
            area = 0.5 * d1 * d2;
            // Assume symmetric kite where both pairs of sides equal from right triangles
            const halfD1 = d1 / 2;
            const halfD2 = d2 / 2;
            const side = Math.sqrt(halfD1 * halfD1 + halfD2 * halfD2);
            a = side;
            b = side;
          }
          // Case 2: sides and included angle
          else if (a && b && thetaDeg) {
            if (thetaDeg <= 0 || thetaDeg >= 180) {
              throw new Error("Angle θ must be between 0° and 180°.");
            }
            const thetaRad = toRadians(thetaDeg);
            area = a * b * Math.sin(thetaRad);
            // Approximate diagonals using law of cosines in the two triangles
            // This is a simplification; for most practical kites it is sufficient.
            // Treat d1 as the diagonal between the vertices where equal sides meet.
            const d1sq = a * a + b * b - 2 * a * b * Math.cos(thetaRad);
            d1 = Math.sqrt(Math.max(d1sq, 0));
            // Use area = d1*d2/2 to estimate d2
            d2 = area && d1 ? (2 * area) / d1 : null;
          }
          // Case 3: one side and both diagonals
          else if (
            (a && d1 && d2 && !b && !thetaDeg) ||
            (b && d1 && d2 && !a && !thetaDeg)
          ) {
            const halfD1 = d1 / 2;
            const halfD2 = d2 / 2;
            const sideFromDiags = Math.sqrt(halfD1 * halfD1 + halfD2 * halfD2);
            if (a && !b) {
              a = sideFromDiags;
              b = sideFromDiags;
            } else if (b && !a) {
              b = sideFromDiags;
              a = sideFromDiags;
            }
            area = 0.5 * d1 * d2;
          }
          // Fallback: not enough or inconsistent data
          else {
            throw new Error(
              "Please provide a valid combination: either both diagonals; both sides and the included angle; or one side plus both diagonals."
            );
          }

          // Basic validation
          if (a && b) {
            perimeter = 2 * (a + b);
          }

          // Approximate angles if not given
          if (!thetaDeg && a && b && d1) {
            // Use law of cosines on diagonal d1 between equal sides a and b
            const cosTheta = (a * a + b * b - d1 * d1) / (2 * a * b);
            if (cosTheta >= -1 && cosTheta <= 1) {
              thetaDeg = toDegrees(Math.acos(cosTheta));
            }
          }
          if (thetaDeg) {
            phiDeg = 180 - thetaDeg / 2; // rough relationship for many kites
          }

          // Inradius for tangential kite: r = A / s where s is semiperimeter
          if (area && perimeter) {
            const s = perimeter / 2;
            inradius = area / s;
          }

          // Very rough circumradius estimate using average of triangle circumradii
          if (a && b && d1) {
            const s1 = (a + b + d1) / 2;
            const triArea = Math.sqrt(
              Math.max(s1 * (s1 - a) * (s1 - b) * (s1 - d1), 0)
            );
            if (triArea > 0) {
              circumradius = (a * b * d1) / (4 * triArea);
            }
          }

          // Update UI
          const unitLabel = unit || "unit";
          const unitSqLabel = unit ? unit + "²" : "unit²";

          document.querySelectorAll(".unit-label").forEach((el) => {
            el.textContent = unit || el.textContent;
          });

          document.getElementById("res-area").textContent = formatNumber(
            area,
            4
          );
          document.getElementById("res-area-units").textContent = unitSqLabel;

          document.getElementById("res-perimeter").textContent = formatNumber(
            perimeter,
            4
          );
          document.getElementById("res-perimeter-units").textContent =
            unitLabel;

          document.getElementById("res-d1").textContent = formatNumber(d1, 4);
          document.getElementById("res-d1-units").textContent = unitLabel;

          document.getElementById("res-d2").textContent = formatNumber(d2, 4);
          document.getElementById("res-d2-units").textContent = unitLabel;

          document.getElementById("res-a").textContent = formatNumber(a, 4);
          document.getElementById("res-a-units").textContent = unitLabel;

          document.getElementById("res-b").textContent = formatNumber(b, 4);
          document.getElementById("res-b-units").textContent = unitLabel;

          document.getElementById("res-inradius").textContent = formatNumber(
            inradius,
            4
          );
          document.getElementById("res-inradius-units").textContent = unitLabel;

          document.getElementById("res-circumradius").textContent =
            formatNumber(circumradius, 4);
          document.getElementById("res-circumradius-units").textContent =
            unitLabel;

          document.getElementById("res-theta").textContent = formatNumber(
            thetaDeg,
            2
          );
          document.getElementById("res-phi").textContent = formatNumber(
            phiDeg,
            2
          );
        } catch (e) {
          errEl.textContent = e.message;
          errEl.classList.remove("hidden");
        }
      }

      document
        .getElementById("compute-kite-btn")
        .addEventListener("click", computeKite);

      document
        .getElementById("swap-diagonals-btn")
        .addEventListener("click", () => {
          const d1El = document.getElementById("diag-d1");
          const d2El = document.getElementById("diag-d2");
          const tmp = d1El.value;
          d1El.value = d2El.value;
          d2El.value = tmp;
        });

      document
        .getElementById("reset-kite-btn")
        .addEventListener("click", () => {
          ["side-a", "side-b", "diag-d1", "diag-d2", "angle-theta"].forEach(
            (id) => {
              document.getElementById(id).value = "";
            }
          );
          document.getElementById("kite-error").classList.add("hidden");
          document.getElementById("kite-error").textContent = "";

          [
            "res-area",
            "res-perimeter",
            "res-d1",
            "res-d2",
            "res-a",
            "res-b",
            "res-inradius",
            "res-circumradius",
            "res-theta",
            "res-phi",
          ].forEach((id) => (document.getElementById(id).textContent = "–"));
        });

      // Update unit labels when unit changes
      document.getElementById("unit-select").addEventListener("change", () => {
        const unit = document.getElementById("unit-select").value || "";
        const unitLabel = unit || "unit";
        const unitSqLabel = unit ? unit + "²" : "unit²";

        document.querySelectorAll(".unit-label").forEach((el) => {
          el.textContent = unitLabel;
        });
        document.getElementById("res-area-units").textContent = unitSqLabel;
      });
    </script>

