    <script>
      // Loan comparison logic
      const maxLoans = 4;

      const defaultLoans = [
        {
          name: "Loan A",
          amount: 20000,
          rate: 7.5,
          years: 5,
          upfrontFee: 0,
          monthlyFee: 0,
        },
        {
          name: "Loan B",
          amount: 20000,
          rate: 9.9,
          years: 5,
          upfrontFee: 0,
          monthlyFee: 0,
        },
        {
          name: "Loan C",
          amount: 20000,
          rate: 6.9,
          years: 4,
          upfrontFee: 199,
          monthlyFee: 0,
        },
        {
          name: "Loan D",
          amount: 20000,
          rate: 11.5,
          years: 3,
          upfrontFee: 0,
          monthlyFee: 10,
        },
      ];

      function createLoanCard(index) {
        const loan = defaultLoans[index];
        const card = document.createElement("div");
        card.className =
          "border border-gray-200 rounded-md p-3 card-hover bg-white";
        card.dataset.index = index;

        card.innerHTML = `
      <div class="flex items-center justify-between mb-2">
        <h3 class="font-semibold text-sm">Loan ${index + 1}</h3>
        <span class="inline-flex items-center rounded-full px-2 py-0.5 text-xs font-medium bg-blue-50 text-blue-700">Option ${
          index + 1
        }</span>
      </div>
      <div class="space-y-2 text-sm">
        <div>
          <label class="block text-gray-700 mb-1" for="loanName-${index}">Name</label>
          <input id="loanName-${index}" type="text" value="${
          loan.name
        }" class="w-full border border-gray-300 rounded-md px-2 py-1" />
        </div>
        <div>
          <label class="block text-gray-700 mb-1" for="loanAmount-${index}">Amount</label>
          <div class="relative">
            <span class="absolute left-2 top-1/2 -translate-y-1/2 text-gray-400">$</span>
            <input id="loanAmount-${index}" type="number" min="0" step="100" value="${
          loan.amount
        }" class="w-full border border-gray-300 rounded-md pl-6 pr-2 py-1 loan-amount-input" />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div>
            <label class="block text-gray-700 mb-1" for="loanRate-${index}">Rate (APR %)</label>
            <input id="loanRate-${index}" type="number" min="0" step="0.01" value="${
          loan.rate
        }" class="w-full border border-gray-300 rounded-md px-2 py-1" />
          </div>
          <div>
            <label class="block text-gray-700 mb-1" for="loanYears-${index}">Term (years)</label>
            <input id="loanYears-${index}" type="number" min="0.5" step="0.5" value="${
          loan.years
        }" class="w-full border border-gray-300 rounded-md px-2 py-1" />
          </div>
        </div>
        <div class="grid grid-cols-2 gap-2">
          <div>
            <label class="block text-gray-700 mb-1" for="loanUpfront-${index}">Upfront fee</label>
            <div class="relative">
              <span class="absolute left-2 top-1/2 -translate-y-1/2 text-gray-400">$</span>
              <input id="loanUpfront-${index}" type="number" min="0" step="1" value="${
          loan.upfrontFee
        }" class="w-full border border-gray-300 rounded-md pl-6 pr-2 py-1" />
            </div>
          </div>
          <div>
            <label class="block text-gray-700 mb-1" for="loanMonthlyFee-${index}">Monthly fee</label>
            <div class="relative">
              <span class="absolute left-2 top-1/2 -translate-y-1/2 text-gray-400">$</span>
              <input id="loanMonthlyFee-${index}" type="number" min="0" step="1" value="${
          loan.monthlyFee
        }" class="w-full border border-gray-300 rounded-md pl-6 pr-2 py-1" />
            </div>
          </div>
        </div>
      </div>
    `;
        return card;
      }

      function renderLoanCards() {
        const container = document.getElementById("loanCards");
        const numLoans = parseInt(
          document.getElementById("numLoans").value,
          10
        );
        container.innerHTML = "";
        for (let i = 0; i < numLoans; i++) {
          container.appendChild(createLoanCard(i));
        }
        applySyncAmount();
      }

      function applySyncAmount() {
        const sync = document.getElementById("syncAmount").checked;
        const sharedAmount =
          parseFloat(document.getElementById("sharedAmount").value) || 0;
        const amountInputs = document.querySelectorAll(".loan-amount-input");
        amountInputs.forEach((input, idx) => {
          if (sync) {
            input.value = sharedAmount;
            input.disabled = true;
            input.classList.add("bg-gray-50");
          } else {
            input.disabled = false;
            input.classList.remove("bg-gray-50");
          }
        });
      }

      function getLoanInputs() {
        const numLoans = parseInt(
          document.getElementById("numLoans").value,
          10
        );
        const freq = parseInt(document.getElementById("frequency").value, 10);
        const includeFees = document.getElementById("includeFees").checked;
        const loans = [];

        for (let i = 0; i < numLoans; i++) {
          const name =
            document.getElementById(`loanName-${i}`).value.trim() ||
            `Loan ${i + 1}`;
          const amount =
            parseFloat(document.getElementById(`loanAmount-${i}`).value) || 0;
          const rate =
            parseFloat(document.getElementById(`loanRate-${i}`).value) || 0;
          const years =
            parseFloat(document.getElementById(`loanYears-${i}`).value) || 0;
          const upfrontFee =
            parseFloat(document.getElementById(`loanUpfront-${i}`).value) || 0;
          const monthlyFee =
            parseFloat(document.getElementById(`loanMonthlyFee-${i}`).value) ||
            0;

          if (amount <= 0 || years <= 0) continue;

          loans.push({
            index: i,
            name,
            amount,
            rate,
            years,
            upfrontFee,
            monthlyFee,
            freq,
            includeFees,
          });
        }
        return loans;
      }

      function computeLoanMetrics(loan) {
        const n = loan.years * loan.freq;
        const r = loan.rate / 100 / loan.freq;
        let payment = 0;

        if (r === 0) {
          payment = loan.amount / n;
        } else {
          const pow = Math.pow(1 + r, n);
          payment = (loan.amount * (r * pow)) / (pow - 1);
        }

        const baseTotalPaid = payment * n;
        const baseTotalInterest = baseTotalPaid - loan.amount;

        let totalFees = 0;
        let totalPaid = baseTotalPaid;
        let totalInterest = baseTotalInterest;

        if (loan.includeFees) {
          const months = loan.years * 12;
          const monthlyFeeTotal = loan.monthlyFee * months;
          totalFees = loan.upfrontFee + monthlyFeeTotal;
          totalPaid += totalFees;
          totalInterest += totalFees;
        }

        // Approximate effective APR using simple IRR on cash flows (annualized)
        let effectiveAPR = loan.rate;
        if (loan.includeFees && loan.amount > 0 && n > 0) {
          const guessRate = loan.rate / 100;
          const cashFlows = [];
          cashFlows.push(-(loan.amount - loan.upfrontFee)); // net amount received
          const periods = n;
          const periodPayment =
            payment + loan.monthlyFee * (loan.freq === 12 ? 1 : loan.freq / 12);
          for (let t = 1; t <= periods; t++) {
            cashFlows.push(periodPayment);
          }
          const irr = approximateIRR(cashFlows, guessRate / loan.freq || 0.01);
          if (!isNaN(irr)) {
            effectiveAPR = irr * loan.freq * 100;
          }
        }

        return {
          ...loan,
          payment,
          totalInterest,
          totalPaid,
          totalFees,
          effectiveAPR,
        };
      }

      function approximateIRR(cashFlows, guess) {
        // Newton-Raphson IRR approximation
        let rate = guess;
        for (let iter = 0; iter < 50; iter++) {
          let npv = 0;
          let dnpv = 0;
          for (let t = 0; t < cashFlows.length; t++) {
            const cf = cashFlows[t];
            const denom = Math.pow(1 + rate, t);
            npv += cf / denom;
            if (t > 0) {
              dnpv -= (t * cf) / (denom * (1 + rate));
            }
          }
          if (Math.abs(npv) < 1e-7) break;
          const newRate = rate - npv / dnpv;
          if (!isFinite(newRate) || newRate <= -0.9999) break;
          rate = newRate;
        }
        return rate;
      }

      function formatCurrency(value) {
        if (!isFinite(value)) return "-";
        return (
          "$" +
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "-";
        return (
          value.toLocaleString(undefined, { maximumFractionDigits: 2 }) + "%"
        );
      }

      function formatTerm(years) {
        if (years < 1) {
          return (years * 12).toFixed(0) + " mo";
        }
        return (
          years.toLocaleString(undefined, { maximumFractionDigits: 1 }) + " yrs"
        );
      }

      function renderResults(loans) {
        const resultsSection = document.getElementById("resultsSection");
        const chartsSection = document.getElementById("chartsSection");
        const tbody = document.getElementById("resultsTableBody");
        const summaryAlert = document.getElementById("summaryAlert");
        const totalCostChart = document.getElementById("totalCostChart");
        const interestChart = document.getElementById("interestChart");

        if (!loans.length) {
          resultsSection.classList.add("hidden");
          chartsSection.classList.add("hidden");
          return;
        }

        const computed = loans.map(computeLoanMetrics);

        // Determine best (lowest totalPaid)
        let best = computed[0];
        let worst = computed[0];
        computed.forEach((l) => {
          if (l.totalPaid < best.totalPaid) best = l;
          if (l.totalPaid > worst.totalPaid) worst = l;
        });

        tbody.innerHTML = "";
        computed.forEach((l) => {
          const tr = document.createElement("tr");
          const isBest = l === best;
          tr.className = isBest ? "bg-green-50" : "";
          tr.innerHTML = `
        <td class="px-3 py-2 text-left font-medium text-gray-800">${l.name}</td>
        <td class="px-3 py-2 text-right">${formatCurrency(l.amount)}</td>
        <td class="px-3 py-2 text-right">${formatPercent(l.rate)}</td>
        <td class="px-3 py-2 text-right">${formatTerm(l.years)}</td>
        <td class="px-3 py-2 text-right">${formatCurrency(l.payment)}</td>
        <td class="px-3 py-2 text-right">${formatCurrency(l.totalInterest)}</td>
        <td class="px-3 py-2 text-right">${formatCurrency(l.totalPaid)}</td>
        <td class="px-3 py-2 text-right">${
          loan.includeFees ? formatPercent(l.effectiveAPR) : "—"
        }</td>
      `;
          tbody.appendChild(tr);
        });

        const savings = worst.totalPaid - best.totalPaid;
        summaryAlert.classList.remove("hidden");
        summaryAlert.innerHTML = `
      <strong>${
        best.name
      }</strong> is the cheapest option with a total cost of <strong>${formatCurrency(
          best.totalPaid
        )}</strong>.
      Compared with <strong>${
        worst.name
      }</strong>, you save approximately <strong>${formatCurrency(
          savings
        )}</strong> over the life of the loan.
    `;

        // Charts
        const maxTotal = Math.max(...computed.map((l) => l.totalPaid));
        const maxInterest = Math.max(...computed.map((l) => l.totalInterest));

        totalCostChart.innerHTML = "";
        interestChart.innerHTML = "";

        computed.forEach((l) => {
          const totalHeight = maxTotal > 0 ? (l.totalPaid / maxTotal) * 100 : 0;
          const interestHeight =
            maxInterest > 0 ? (l.totalInterest / maxInterest) * 100 : 0;

          const totalBar = document.createElement("div");
          totalBar.className =
            "flex-1 flex flex-col items-center justify-end gap-1";
          totalBar.innerHTML = `
        <div class="w-6 md:w-8 rounded-t-md ${
          l === best ? "bg-green-500" : "bg-blue-500"
        }" style="height:${Math.max(totalHeight, 5)}%"></div>
        <div class="text-[11px] text-gray-700 text-center truncate w-16" title="${
          l.name
        }">${l.name}</div>
      `;
          totalCostChart.appendChild(totalBar);

          const interestBar = document.createElement("div");
          interestBar.className =
            "flex-1 flex flex-col items-center justify-end gap-1";
          interestBar.innerHTML = `
        <div class="w-6 md:w-8 rounded-t-md ${
          l === best ? "bg-green-500" : "bg-indigo-500"
        }" style="height:${Math.max(interestHeight, 5)}%"></div>
        <div class="text-[11px] text-gray-700 text-center truncate w-16" title="${
          l.name
        }">${l.name}</div>
      `;
          interestChart.appendChild(interestBar);
        });

        resultsSection.classList.remove("hidden");
        chartsSection.classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        renderLoanCards();
        document
          .getElementById("numLoans")
          .addEventListener("change", renderLoanCards);
        document
          .getElementById("syncAmount")
          .addEventListener("change", applySyncAmount);
        document
          .getElementById("sharedAmount")
          .addEventListener("input", () => {
            if (document.getElementById("syncAmount").checked) {
              applySyncAmount();
            }
          });
        document.getElementById("compareBtn").addEventListener("click", () => {
          const loans = getLoanInputs();
          renderResults(loans);
        });
      });
    </script>

