        if (tab === "design") {
          tabDesign.classList.add("tab-active");
          tabDesign.classList.remove("text-gray-600");
          tabProfile.classList.remove("tab-active");
          tabProfile.classList.add("text-gray-600");
          panelDesign.classList.remove("hidden");
          panelProfile.classList.add("hidden");
        } else {
