          tabDesign.classList.add("text-gray-600");
          panelProfile.classList.remove("hidden");
          panelDesign.classList.add("hidden");
        }
      }

      tabDesign.addEventListener("click", () => activateTab("design"));
      tabProfile.addEventListener("click", () => activateTab("profile"));

      // Show/hide length input depending on design mode
      const designModeEl = document.getElementById("designMode");
      const lengthInputWrapper = document.getElementById("lengthInputWrapper");
      designModeEl.addEventListener("change", () => {
        if (designModeEl.value === "length") {
          lengthInputWrapper.classList.add("opacity-60");
        } else {
          lengthInputWrapper.classList.remove("opacity-60");
        }
      });
      lengthInputWrapper.classList.add("opacity-60");

      // Suggest SSD from speed (simple approximation)
      document.getElementById("btnSuggestSSD").addEventListener("click", () => {
        const V = parseFloat(
          document.getElementById("designSpeed").value || "0"
        ); // km/h
        if (V <= 0) return;
        const t = 2.5; // s
        const f = 0.35;
        const G = 0.0;
        const SSD = 0.278 * V * t + (V * V) / (254 * (f + G));
        document.getElementById("ssd").value = SSD.toFixed(1);
      });

      // Design calculations
      document.getElementById("btnDesign").addEventListener("click", () => {
        const curveType = document.getElementById("curveType").value;
        const mode = document.getElementById("designMode").value;
        const g1 = parseFloat(document.getElementById("g1").value || "0");
        const g2 = parseFloat(document.getElementById("g2").value || "0");
        const A = Math.abs(g2 - g1); // in percent
        const SSD = parseFloat(document.getElementById("ssd").value || "0");
        const PSD = parseFloat(document.getElementById("psd").value || "0");
        const givenL = parseFloat(
          document.getElementById("givenLength").value || "0"
        );

        if (A <= 0 || SSD <= 0) {
          alert("Please enter non-zero grade difference and SSD.");
          return;
        }

        const h1 = 1.1,
          h2 = 0.6,
          h3 = 0.6,
          thetaDeg = 1.0;
        const thetaRad = (thetaDeg * Math.PI) / 180;

        let Lmin = 0,
          Savailable = 0,
          Lused = 0;

        if (mode === "length") {
          // Compute minimum length for given SSD
          if (curveType === "crest") {
            const denom = 200 * (h1 + h2);
            const Llong = (A * SSD * SSD) / denom;
            if (Llong >= SSD) {
              Lmin = Llong;
            } else {
              Lmin = 2 * SSD - denom / A;
            }
            Lused = Lmin;
            // Available sight distance for Lmin (should be ≈ SSD)
            if (Lused >= SSD) {
              Savailable = SSD;
            } else {
              Savailable = (Lused + (200 * (h1 + h2)) / A) / 2;
            }
          } else {
            // sag
            const denom = 200 * (h3 + SSD * Math.tan(thetaRad));
            const Llong = (A * SSD * SSD) / denom;
            if (Llong >= SSD) {
              Lmin = Llong;
            } else {
              Lmin = 2 * SSD - denom / A;
            }
            Lused = Lmin;
            if (Lused >= SSD) {
              Savailable = SSD;
            } else {
              Savailable =
                (Lused + (200 * (h3 + SSD * Math.tan(thetaRad))) / A) / 2;
            }
          }
        } else {
          // mode === 'sight': compute available sight distance for given L
          if (givenL <= 0) {
            alert("Please enter a positive curve length.");
            return;
          }
          Lused = givenL;
          if (curveType === "crest") {
            const denom = 200 * (h1 + h2);
            if (Lused >= SSD) {
              // long-curve formula inverted for S
              Savailable = Math.sqrt((denom * Lused) / A);
            } else {
              Savailable = (Lused + denom / A) / 2;
            }
            // Compute equivalent Lmin for SSD for comparison
            const Llong = (A * SSD * SSD) / denom;
            if (Llong >= SSD) {
              Lmin = Llong;
            } else {
              Lmin = 2 * SSD - denom / A;
            }
          } else {
            const denomSSD = 200 * (h3 + SSD * Math.tan(thetaRad));
            if (Lused >= SSD) {
              Savailable = Math.sqrt((denomSSD * Lused) / A);
            } else {
              Savailable = (Lused + denomSSD / A) / 2;
            }
            const Llong = (A * SSD * SSD) / denomSSD;
            if (Llong >= SSD) {
              Lmin = Llong;
            } else {
              Lmin = 2 * SSD - denomSSD / A;
            }
          }
        }

        const K = Lused / A;

        document.getElementById("resA").textContent = A.toFixed(3);
        document.getElementById("resLmin").textContent = Lmin.toFixed(2);
        document.getElementById("resK").textContent = isFinite(K)
          ? K.toFixed(2)
          : "—";
        document.getElementById("resS").textContent = Savailable.toFixed(2);

        let ssdCheck = "";
        if (Savailable + 1e-6 >= SSD) {
          ssdCheck = "OK – available sight distance ≥ SSD";
        } else {
          ssdCheck = "Not OK – available sight distance < SSD";
        }
        document.getElementById("resSSDCheck").textContent = ssdCheck;

        if (!isNaN(PSD) && PSD > 0) {
          const psdCheck =
            Savailable + 1e-6 >= PSD
              ? "OK – available sight distance ≥ PSD"
              : "Not OK – available sight distance < PSD";
          document.getElementById("resPSDCheck").textContent = psdCheck;
        } else {
          document.getElementById("resPSDCheck").textContent =
            "Not evaluated (PSD not provided)";
        }

        document.getElementById("designResults").classList.remove("hidden");
      });

      document
        .getElementById("btnResetDesign")
        .addEventListener("click", () => {
          document.getElementById("g1").value = 2.0;
          document.getElementById("g2").value = -1.0;
          document.getElementById("designSpeed").value = 80;
          document.getElementById("ssd").value = 140;
          document.getElementById("psd").value = "";
          document.getElementById("givenLength").value = 200;
          document.getElementById("curveType").value = "crest";
          document.getElementById("designMode").value = "length";
          lengthInputWrapper.classList.add("opacity-60");
          document.getElementById("designResults").classList.add("hidden");
        });

      // Profile calculations
      document.getElementById("btnProfile").addEventListener("click", () => {
        const pvcStation = parseFloat(
          document.getElementById("pvcStation").value || "0"
        );
        const pvcElev = parseFloat(
          document.getElementById("pvcElev").value || "0"
        );
        const g1p =
          parseFloat(document.getElementById("profileG1").value || "0") / 100.0; // decimal
        const g2p =
          parseFloat(document.getElementById("profileG2").value || "0") / 100.0;
        const L = parseFloat(document.getElementById("profileL").value || "0");
        const x = parseFloat(document.getElementById("offsetX").value || "0");

        if (L <= 0) {
          alert("Please enter a positive curve length.");
          return;
        }
        if (x < 0 || x > L) {
          alert("Offset x must be between 0 and L.");
          return;
        }

        const Adec = g2p - g1p; // decimal
        const pviStation = pvcStation + L / 2;
        const pviElev = pvcElev + g1p * (L / 2);
        const pvtStation = pvcStation + L;
        const pvtElev = pvcElev + g1p * L + (Adec * L * L) / (2 * L); // simplifies to pvcElev + g1*L + A*L/2

        const xStation = pvcStation + x;
        const xElev = pvcElev + g1p * x + (Adec * x * x) / (2 * L);

        document.getElementById("resPVIStation").textContent =
          pviStation.toFixed(3);
        document.getElementById("resPVIElev").textContent = pviElev.toFixed(3);
        document.getElementById("resPVTStation").textContent =
          pvtStation.toFixed(3);
        document.getElementById("resPVTElev").textContent = pvtElev.toFixed(3);
        document.getElementById("resXStation").textContent =
          xStation.toFixed(3);
        document.getElementById("resXElev").textContent = xElev.toFixed(3);

        document.getElementById("profileResults").classList.remove("hidden");
      });

      document
        .getElementById("btnResetProfile")
        .addEventListener("click", () => {
          document.getElementById("pvcStation").value = 0;
          document.getElementById("pvcElev").value = 100.0;
          document.getElementById("profileG1").value = 2.0;
          document.getElementById("profileG2").value = -1.0;
          document.getElementById("profileL").value = 200;
          document.getElementById("offsetX").value = 50;
          document.getElementById("profileResults").classList.add("hidden");
        });

      // Mobile menu script (simple)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
