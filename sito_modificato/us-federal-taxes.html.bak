      const $ = (id) => document.getElementById(id);

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getInputs() {
        const year = parseInt($("taxYear").value, 10);
        const status = $("filingStatus").value;
        const income = Math.max(0, Number($("income").value) || 0);
        const adjustments = Math.max(0, Number($("adjustments").value) || 0);
        const credits = Math.max(0, Number($("credits").value) || 0);
        const deductionMode =
          document.querySelector('input[name="deductionMode"]:checked')
            ?.value || "standard";
        let deductions = 0;

        const stdDed = TAX_DATA[year].standardDeduction[status];

        if (deductionMode === "standard") {
          deductions = stdDed;
          $("deductions").value = stdDed;
          $("deductions").readOnly = true;
        } else {
          deductions = Math.max(0, Number($("deductions").value) || 0);
          $("deductions").readOnly = false;
        }

        const agi = Math.max(0, income - adjustments);
        const taxableIncome = Math.max(0, agi - deductions);

        return {
          year,
          status,
          income,
          adjustments,
          credits,
          deductions,
          agi,
          taxableIncome,
          stdDed,
          deductionMode,
        };
      }

      function updateDeductionHint(inputs) {
        const statusLabels = {
          single: "Single",
          mfj: "Married filing jointly",
          mfs: "Married filing separately",
          hoh: "Head of household",
        };
        const mode = inputs.deductionMode;
        const hintEl = $("deductionHint");
        if (mode === "standard") {
          hintEl.textContent = `Using standard deduction for ${
            statusLabels[inputs.status]
          }: ${formatMoney(inputs.stdDed)}.`;
        } else {
          hintEl.textContent = "Using your custom itemized deduction amount.";
        }
      }

      function computeTaxByBrackets(taxableIncome, brackets) {
        let remaining = taxableIncome;
        let lower = 0;
        let totalTax = 0;
        const breakdown = [];

        for (const bracket of brackets) {
          if (remaining <= 0) break;
          const upper = bracket.upTo;
          const span = Math.max(0, Math.min(remaining, upper - lower));
          if (span > 0) {
            const tax = span * bracket.rate;
            breakdown.push({
              lower,
              upper,
              span,
              rate: bracket.rate,
              tax,
            });
            totalTax += tax;
            remaining -= span;
          }
          lower = upper;
        }

        return { totalTax, breakdown };
      }

      function renderBracketBreakdown(breakdown, taxableIncome) {
        const container = $("bracketBreakdown");
        container.innerHTML = "";

        if (taxableIncome <= 0) {
          container.innerHTML =
            '<p class="text-gray-500">Taxable income is zero, so no federal income tax is due.</p>';
          return;
        }

        breakdown.forEach((b, idx) => {
          const line = document.createElement("div");
          line.className = "flex justify-between";
          const rangeLabel =
            b.upper === Infinity
              ? `${formatMoney(b.lower)}+`
              : `${formatMoney(b.lower)} – ${formatMoney(b.upper)}`;
          line.innerHTML = `
        <div>
          <span class="font-medium">${formatPercent(b.rate)}</span>
          <span class="text-gray-600"> on </span>
          <span>${rangeLabel}</span>
        </div>
        <div class="text-right">
          <div class="text-gray-700">${formatMoney(b.tax)}</div>
          <div class="text-gray-400 text-[11px]">(${formatMoney(
            b.span
          )} taxed)</div>
        </div>
      `;
          container.appendChild(line);
        });
      }

      function calculateAndRender() {
        const inputs = getInputs();
        updateDeductionHint(inputs);

        const brackets = TAX_DATA[inputs.year].brackets[inputs.status];
        const { totalTax: preCreditTax, breakdown } = computeTaxByBrackets(
          inputs.taxableIncome,
          brackets
        );
        const finalTax = Math.max(0, preCreditTax - inputs.credits);
        const afterTaxIncome = Math.max(0, inputs.income - finalTax);
        const effectiveRate = inputs.income > 0 ? finalTax / inputs.income : 0;

        // Determine marginal bracket
        let marginalRate = 0;
        for (const b of breakdown) {
          if (b.span > 0) marginalRate = b.rate;
        }

        // Update summary UI
        $("taxableIncomeDisplay").textContent = formatMoney(
          inputs.taxableIncome
        );
        $("taxDisplay").textContent = formatMoney(finalTax);
        $("afterTaxDisplay").textContent = formatMoney(afterTaxIncome);
        $("effectiveRateDisplay").textContent = formatPercent(effectiveRate);
        $("marginalBracketDisplay").textContent =
          marginalRate > 0 ? formatPercent(marginalRate) : "–";

        renderBracketBreakdown(breakdown, inputs.taxableIncome);
      }

      // Event listeners
      document.addEventListener("DOMContentLoaded", () => {
        // Sync standard deduction when year or status changes
        ["taxYear", "filingStatus"].forEach((id) => {
          $(id).addEventListener("change", () => {
            const inputs = getInputs();
            updateDeductionHint(inputs);
            calculateAndRender();
          });
        });

        document
          .querySelectorAll('input[name="deductionMode"]')
          .forEach((radio) => {
            radio.addEventListener("change", () => {
              const inputs = getInputs();
              updateDeductionHint(inputs);
              calculateAndRender();
            });
          });

        ["income", "adjustments", "deductions", "credits"].forEach((id) => {
          $(id).addEventListener("input", () => {
            // Debounce-like simple behavior: calculate on each input
            calculateAndRender();
          });
        });

        $("calculateBtn").addEventListener("click", (e) => {
          e.preventDefault();
          calculateAndRender();
        });

        // Initial calculation
        calculateAndRender();
      });
    </script>

