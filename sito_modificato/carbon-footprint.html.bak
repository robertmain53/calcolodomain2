      </div>
    </footer>

    <script src="/assets/js/mobile-menu.js"></script>
    <script src="/search.js"></script>

    <script>
      // Emission factors (approximate, kg CO2e per unit)
      const EF = {
        electricityDefault: 0.4, // kg/kWh
        gasTherm: 5.3,
        heatingOilLiter: 2.68,
        otherHeatKwh: 0.25,
        gasolineLiter: 2.31,
        dieselLiter: 2.68,
        hybridFactor: 0.7, // relative to gasoline
        evKwhPerKm: 0.18, // kWh/km
        busPerKm: 0.1,
        railPerKm: 0.04,
        flights: {
          short: 0.3 * 1000, // kg per one-way
          medium: 0.6 * 1000,
          long: 1.6 * 1000,
        },
      };

      const dietTons = {
        highMeat: 5.0,
        averageOmni: 3.5,
        lowMeat: 2.8,
        vegetarian: 2.1,
        vegan: 1.7,
      };

      const foodWasteMultiplier = {
        low: 0.9,
        medium: 1.0,
        high: 1.15,
      };

      const goodsBaseTons = 2.0; // baseline per person
      const goodsMultiplier = {
        low: 0.7,
        average: 1.0,
        high: 1.4,
      };

      const servicesBaseTons = 1.5;
      const servicesMultiplier = {
        low: 0.8,
        average: 1.0,
        high: 1.2,
      };

      const regionalBenchmarks = {
        global: 4.7,
        us: 14,
        eu: 8,
        uk: 7,
        other: 5,
      };

      function kgToTons(kg) {
        return kg / 1000;
      }

      function formatTons(value) {
        if (!isFinite(value)) return "–";
        if (value < 0.01) return value.toFixed(3);
        return value.toFixed(2);
      }

      function percentage(part, total) {
        if (total <= 0) return "–";
        return ((part / total) * 100).toFixed(1) + "%";
      }

      function calculateFootprint() {
        const householdSize = Math.max(
          1,
          Number(document.getElementById("householdSize").value) || 1
        );
        const region = document.getElementById("region").value;

        // Home energy
        const electricityKwh = Math.max(
          0,
          Number(document.getElementById("electricityKwh").value) || 0
        );
        const elecEF = Math.max(
          0,
          Number(document.getElementById("electricityEmissionFactor").value) ||
            EF.electricityDefault
        );
        const gasTherms = Math.max(
          0,
          Number(document.getElementById("gasTherms").value) || 0
        );
        const heatingOilLiters = Math.max(
          0,
          Number(document.getElementById("heatingOilLiters").value) || 0
        );
        const otherFuelKwh = Math.max(
          0,
          Number(document.getElementById("otherFuelKwh").value) || 0
        );

        const homeKg =
          electricityKwh * elecEF +
          gasTherms * EF.gasTherm +
          heatingOilLiters * EF.heatingOilLiter +
          otherFuelKwh * EF.otherHeatKwh;

        // Transport
        const carKm = Math.max(
          0,
          Number(document.getElementById("carKm").value) || 0
        );
        const carFuelEconomy = Math.max(
          0.1,
          Number(document.getElementById("carFuelEconomy").value) || 0.1
        );
        const carFuelType = document.getElementById("carFuelType").value;

        let carKg = 0;
        if (carFuelType === "ev") {
          const kwhPerKm = EF.evKwhPerKm;
          carKg = carKm * kwhPerKm * elecEF;
        } else {
          const litersPerYear = (carKm * carFuelEconomy) / 100;
          let efPerLiter = EF.gasolineLiter;
          if (carFuelType === "diesel") efPerLiter = EF.dieselLiter;
          if (carFuelType === "hybrid")
            efPerLiter = EF.gasolineLiter * EF.hybridFactor;
          carKg = litersPerYear * efPerLiter;
        }

        const busKm = Math.max(
          0,
          Number(document.getElementById("busKm").value) || 0
        );
        const railKm = Math.max(
          0,
          Number(document.getElementById("railKm").value) || 0
        );
        const bikeWalkKm = Math.max(
          0,
          Number(document.getElementById("bikeWalkKm").value) || 0
        ); // informational only

        const busKg = busKm * EF.busPerKm;
        const railKg = railKm * EF.railPerKm;

        const shortFlights = Math.max(
          0,
          Number(document.getElementById("shortFlights").value) || 0
        );
        const mediumFlights = Math.max(
          0,
          Number(document.getElementById("mediumFlights").value) || 0
        );
        const longFlights = Math.max(
          0,
          Number(document.getElementById("longFlights").value) || 0
        );

        const flightsKg =
          shortFlights * EF.flights.short +
          mediumFlights * EF.flights.medium +
          longFlights * EF.flights.long;

        const transportKg = carKg + busKg + railKg + flightsKg;

        // Food
        const dietType = document.getElementById("dietType").value;
        const wasteLevel = document.getElementById("foodWasteLevel").value;
        const baseDietTons = dietTons[dietType] || dietTons.averageOmni;
        const dietMultiplier = foodWasteMultiplier[wasteLevel] || 1.0;
        const foodTonsPerPerson = baseDietTons * dietMultiplier;
        const foodKg = foodTonsPerPerson * householdSize * 1000;

        // Goods & lifestyle
        const shoppingLevel = document.getElementById("shoppingLevel").value;
        const servicesLevel = document.getElementById("servicesLevel").value;

        const goodsTonsPerPerson =
          goodsBaseTons * (goodsMultiplier[shoppingLevel] || 1.0);
        const servicesTonsPerPerson =
          servicesBaseTons * (servicesMultiplier[servicesLevel] || 1.0);
        const goodsKg =
          (goodsTonsPerPerson + servicesTonsPerPerson) * householdSize * 1000;

        // Totals
        const homeTons = kgToTons(homeKg);
        const transportTons = kgToTons(transportKg);
        const foodTons = kgToTons(foodKg);
        const goodsTons = kgToTons(goodsKg);

        const totalTons = homeTons + transportTons + foodTons + goodsTons;
        const perCapitaTons = totalTons / householdSize;

        // Update UI
        document.getElementById("totalFootprint").textContent =
          formatTons(totalTons);
        document.getElementById("perCapitaFootprint").textContent =
          formatTons(perCapitaTons);

        document.getElementById("homeTons").textContent = formatTons(homeTons);
        document.getElementById("transportTons").textContent =
          formatTons(transportTons);
        document.getElementById("foodTons").textContent = formatTons(foodTons);
        document.getElementById("goodsTons").textContent =
          formatTons(goodsTons);

        document.getElementById("homeShare").textContent = percentage(
          homeTons,
          totalTons
        );
        document.getElementById("transportShare").textContent = percentage(
          transportTons,
          totalTons
        );
        document.getElementById("foodShare").textContent = percentage(
          foodTons,
          totalTons
        );
        document.getElementById("goodsShare").textContent = percentage(
          goodsTons,
          totalTons
        );

        // Comparison and rating
        const regionalAvg =
          regionalBenchmarks[region] || regionalBenchmarks.global;
        document.getElementById("globalAvg").textContent =
          regionalAvg.toFixed(1);

        const ratingEl = document.getElementById("footprintRatingLabel");
        const comparisonEl = document.getElementById("comparisonText");

        let ratingText = "Result pending";
        let ratingClass = "bg-gray-100 text-gray-700";

        if (totalTons <= 0) {
          ratingText = "Enter data to see your footprint";
          comparisonEl.textContent =
            "Fill in your energy, transport, food, and lifestyle details, then click “Calculate footprint”.";
        } else {
          const ratio = perCapitaTons / regionalAvg;
          if (perCapitaTons <= 2) {
            ratingText = "Very low footprint (aligned with climate targets)";
            ratingClass = "bg-emerald-100 text-emerald-800";
          } else if (ratio < 0.7) {
            ratingText = "Below typical for your region";
            ratingClass = "bg-green-100 text-green-800";
          } else if (ratio <= 1.3) {
            ratingText = "Around typical for your region";
            ratingClass = "bg-amber-100 text-amber-800";
          } else {
            ratingText = "Above typical for your region";
            ratingClass = "bg-rose-100 text-rose-800";
          }

          const diff = perCapitaTons - regionalAvg;
          const diffAbs = Math.abs(diff).toFixed(1);
          if (diff > 0.2) {
            comparisonEl.textContent = `Your per-person footprint is about ${diffAbs} tCO₂e higher than the typical value for your selected region. Focus on the largest category in your breakdown first.`;
          } else if (diff < -0.2) {
            comparisonEl.textContent = `Your per-person footprint is about ${diffAbs} tCO₂e lower than the typical value for your selected region. There may still be room for further reductions in high-impact areas.`;
          } else {
            comparisonEl.textContent = `Your per-person footprint is close to the typical value for your selected region. Use the category breakdown to identify realistic next steps.`;
          }
        }

        ratingEl.textContent = ratingText;
        ratingEl.className = "result-badge " + ratingClass;
      }

      function resetCalculator() {
        document.getElementById("region").value = "global";
        document.getElementById("householdSize").value = 1;

        document.getElementById("electricityKwh").value = 3500;
        document.getElementById("electricityEmissionFactor").value =
          EF.electricityDefault;
        document.getElementById("gasTherms").value = 400;
        document.getElementById("heatingOilLiters").value = 0;
        document.getElementById("otherFuelKwh").value = 0;

        document.getElementById("carKm").value = 12000;
        document.getElementById("carFuelEconomy").value = 7.5;
        document.getElementById("carFuelType").value = "gasoline";

        document.getElementById("busKm").value = 500;
        document.getElementById("railKm").value = 800;
        document.getElementById("bikeWalkKm").value = 300;

        document.getElementById("shortFlights").value = 2;
        document.getElementById("mediumFlights").value = 0;
        document.getElementById("longFlights").value = 0;

        document.getElementById("dietType").value = "averageOmni";
        document.getElementById("foodWasteLevel").value = "medium";

        document.getElementById("shoppingLevel").value = "average";
        document.getElementById("servicesLevel").value = "average";

        // Clear results
        document.getElementById("totalFootprint").textContent = "–";
        document.getElementById("perCapitaFootprint").textContent = "–";
        document.getElementById("homeTons").textContent = "–";
        document.getElementById("transportTons").textContent = "–";
        document.getElementById("foodTons").textContent = "–";
        document.getElementById("goodsTons").textContent = "–";
        document.getElementById("homeShare").textContent = "–";
        document.getElementById("transportShare").textContent = "–";
        document.getElementById("foodShare").textContent = "–";
        document.getElementById("goodsShare").textContent = "–";

        const ratingEl = document.getElementById("footprintRatingLabel");
        ratingEl.textContent = "–";
        ratingEl.className = "result-badge bg-gray-100 text-gray-700";
        document.getElementById("comparisonText").textContent =
          "Enter your data and click “Calculate footprint” to see how you compare to typical values.";
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateFootprint);
      document
        .getElementById("resetBtn")
        .addEventListener("click", resetCalculator);
    </script>

