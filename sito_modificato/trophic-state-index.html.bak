    <script>
      // TSI calculator logic
      function classifyTrophic(tsi) {
        if (tsi === null || isNaN(tsi)) return { label: "–", desc: "" };
        if (tsi < 40) {
          return {
            label: "Oligotrophic",
            desc: "Low nutrients and algal biomass; clear water, often deep and well-oxygenated.",
          };
        } else if (tsi < 50) {
          return {
            label: "Mesotrophic",
            desc: "Moderate nutrients and productivity; generally good recreational water quality.",
          };
        } else if (tsi < 70) {
          return {
            label: "Eutrophic",
            desc: "High nutrients and frequent algal blooms; reduced clarity and possible oxygen depletion.",
          };
        } else {
          return {
            label: "Hypereutrophic",
            desc: "Very high nutrients and algal biomass; poor clarity and frequent nuisance blooms.",
          };
        }
      }

      function formatTSI(value) {
        return value === null || isNaN(value) ? "–" : value.toFixed(1);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const secchiInput = document.getElementById("secchiDepth");
        const secchiUnit = document.getElementById("secchiUnit");
        const chlInput = document.getElementById("chl");
        const tpInput = document.getElementById("tp");

        const tsiSdVal = document.getElementById("tsiSdVal");
        const tsiChlVal = document.getElementById("tsiChlVal");
        const tsiTpVal = document.getElementById("tsiTpVal");
        const tsiAvgVal = document.getElementById("tsiAvgVal");
        const trophicBadge = document.getElementById("trophicBadge");
        const trophicDesc = document.getElementById("trophicDesc");
        const consistencyText = document.getElementById("consistencyText");

        const resultsPlaceholder =
          document.getElementById("resultsPlaceholder");
        const resultsContent = document.getElementById("resultsContent");

        document
          .getElementById("calcBtn")
          .addEventListener("click", function () {
            let sd = parseFloat(secchiInput.value);
            const chl = parseFloat(chlInput.value);
            const tp = parseFloat(tpInput.value);

            let tsiSd = null,
              tsiChl = null,
              tsiTp = null;

            // Convert Secchi to meters if needed
            if (!isNaN(sd) && sd > 0) {
              if (secchiUnit.value === "ft") {
                sd = sd * 0.3048;
              }
              if (sd > 0) {
                tsiSd = 60 - 14.41 * Math.log10(sd);
              }
            }

            if (!isNaN(chl) && chl > 0) {
              tsiChl = 9.81 * Math.log10(chl) + 30.6;
            }

            if (!isNaN(tp) && tp > 0) {
              tsiTp = 14.42 * Math.log10(tp) + 4.15;
            }

            const tsiValues = [tsiSd, tsiChl, tsiTp].filter(
              (v) => v !== null && !isNaN(v)
            );
            if (tsiValues.length === 0) {
              resultsPlaceholder.classList.remove("hidden");
              resultsContent.classList.add("hidden");
              return;
            }

            const avg = tsiValues.reduce((a, b) => a + b, 0) / tsiValues.length;

            tsiSdVal.textContent = formatTSI(tsiSd);
            tsiChlVal.textContent = formatTSI(tsiChl);
            tsiTpVal.textContent = formatTSI(tsiTp);
            tsiAvgVal.textContent = formatTSI(avg);

            const trophic = classifyTrophic(avg);
            trophicBadge.textContent = trophic.label;
            trophicDesc.textContent = trophic.desc;

            // Consistency analysis
            let notes = [];
            if (tsiSd !== null && tsiChl !== null) {
              const diffSdChl = tsiSd - tsiChl;
              if (diffSdChl > 5) {
                notes.push(
                  "Secchi depth suggests more eutrophic conditions than chlorophyll-a; non-algal turbidity (sediment, color) may be reducing clarity."
                );
              } else if (diffSdChl < -5) {
                notes.push(
                  "Secchi depth suggests clearer water than expected from chlorophyll-a; grazing, macrophytes, or stratification may be important."
                );
              }
            }
            if (tsiTp !== null && tsiChl !== null) {
              const diffTpChl = tsiTp - tsiChl;
              if (diffTpChl > 5) {
                notes.push(
                  "Total phosphorus is higher relative to chlorophyll-a; nutrients may be stored in sediments or other factors may limit algal growth."
                );
              } else if (diffTpChl < -5) {
                notes.push(
                  "Chlorophyll-a is higher relative to total phosphorus; internal loading or other nutrient dynamics may be influencing blooms."
                );
              }
            }
            if (notes.length === 0) {
              notes.push(
                "TSI values from available indicators are broadly consistent; no strong evidence of non-algal turbidity or unusual nutrient dynamics."
              );
            }
            consistencyText.textContent = notes.join(" ");

            resultsPlaceholder.classList.add("hidden");
            resultsContent.classList.remove("hidden");
          });

        document
          .getElementById("resetBtn")
          .addEventListener("click", function () {
            secchiInput.value = "";
            chlInput.value = "";
            tpInput.value = "";
            secchiUnit.value = "m";

            tsiSdVal.textContent = "–";
            tsiChlVal.textContent = "–";
            tsiTpVal.textContent = "–";
            tsiAvgVal.textContent = "–";
            trophicBadge.textContent = "–";
            trophicDesc.textContent = "";
            consistencyText.textContent = "";

            resultsPlaceholder.classList.remove("hidden");
            resultsContent.classList.add("hidden");
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
