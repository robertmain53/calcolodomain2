    <script>
      // Utility: create a section row
      function createSectionRow(index) {
        const div = document.createElement("div");
        div.className = "border rounded-lg p-4 relative bg-gray-50";
        div.dataset.index = index;

        div.innerHTML = `
      <div class="flex justify-between items-center mb-3">
        <h4 class="font-semibold text-sm">Section #${index + 1}</h4>
        <button type="button" class="text-xs text-red-600 hover:underline remove-section-btn">Remove</button>
      </div>
      <div class="grid md:grid-cols-2 gap-4">
        <div>
          <label class="block text-xs font-medium mb-1">Length</label>
          <div class="flex">
            <input type="number" step="0.1" min="0" value="30" class="section-length w-full border rounded-l px-3 py-2">
            <span class="section-length-unit inline-flex items-center px-3 border border-l-0 rounded-r bg-gray-100 text-xs text-gray-600">ft</span>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium mb-1">Width</label>
          <div class="flex">
            <input type="number" step="0.1" min="0" value="20" class="section-width w-full border rounded-l px-3 py-2">
            <span class="section-width-unit inline-flex items-center px-3 border border-l-0 rounded-r bg-gray-100 text-xs text-gray-600">ft</span>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium mb-1">Overhang (each side, optional)</label>
          <div class="flex">
            <input type="number" step="0.1" min="0" value="1" class="section-overhang w-full border rounded-l px-3 py-2">
            <span class="section-overhang-unit inline-flex items-center px-3 border border-l-0 rounded-r bg-gray-100 text-xs text-gray-600">ft</span>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium mb-1">Pitch (rise : run)</label>
          <div class="flex space-x-1">
            <input type="number" step="0.5" min="0" value="6" class="section-pitch-rise w-full border rounded px-3 py-2" aria-label="Pitch rise">
            <span class="inline-flex items-center text-xs text-gray-600">:</span>
            <input type="number" step="0.5" min="1" value="12" class="section-pitch-run w-full border rounded px-3 py-2" aria-label="Pitch run">
          </div>
          <p class="text-[11px] text-gray-500 mt-1">Common pitches: 4:12 (low), 6:12 (standard), 9:12 (steep).</p>
        </div>
        <div>
          <label class="block text-xs font-medium mb-1">Ridge length for this section</label>
          <div class="flex">
            <input type="number" step="0.1" min="0" value="30" class="section-ridge w-full border rounded-l px-3 py-2">
            <span class="section-ridge-unit inline-flex items-center px-3 border border-l-0 rounded-r bg-gray-100 text-xs text-gray-600">ft</span>
          </div>
          <p class="text-[11px] text-gray-500 mt-1">Set to 0 for shed/mono-slope sections.</p>
        </div>
      </div>
    `;
        return div;
      }

      const sectionsContainer = document.getElementById("sections-container");
      const addSectionBtn = document.getElementById("add-section-btn");
      const unitSystemEl = document.getElementById("unit-system");

      function refreshSectionUnits() {
        const isMetric = unitSystemEl.value === "metric";
        sectionsContainer
          .querySelectorAll(".section-length-unit")
          .forEach((el) => (el.textContent = isMetric ? "m" : "ft"));
        sectionsContainer
          .querySelectorAll(".section-width-unit")
          .forEach((el) => (el.textContent = isMetric ? "m" : "ft"));
        sectionsContainer
          .querySelectorAll(".section-overhang-unit")
          .forEach((el) => (el.textContent = isMetric ? "m" : "ft"));
        sectionsContainer
          .querySelectorAll(".section-ridge-unit")
          .forEach((el) => (el.textContent = isMetric ? "m" : "ft"));

        document.getElementById("shingle-coverage-unit").textContent = isMetric
          ? "m²/bundle"
          : "sq ft/bundle";
        document.getElementById("underlayment-coverage-unit").textContent =
          isMetric ? "m²/roll" : "sq ft/roll";
        document.getElementById("ridge-coverage-unit").textContent = isMetric
          ? "m/bundle"
          : "linear ft/bundle";
        document.getElementById("labor-rate-unit").textContent = isMetric
          ? "Per 10 m² (approx. 1 square)"
          : "Per roofing square (100 sq ft).";
      }

      addSectionBtn.addEventListener("click", () => {
        const index = sectionsContainer.children.length;
        const row = createSectionRow(index);
        sectionsContainer.appendChild(row);
        refreshSectionUnits();
      });

      sectionsContainer.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-section-btn")) {
          const row = e.target.closest("[data-index]");
          row.remove();
          // Re-label sections
          Array.from(sectionsContainer.children).forEach((child, idx) => {
            child.dataset.index = idx;
            const title = child.querySelector("h4");
            if (title) title.textContent = `Section #${idx + 1}`;
          });
        }
      });

      unitSystemEl.addEventListener("change", refreshSectionUnits);

      // Initialize with two sections (common simple roof)
      addSectionBtn.click();
      addSectionBtn.click();

      function calculateRoofing() {
        const isMetric = unitSystemEl.value === "metric";
        const wastePercent =
          parseFloat(document.getElementById("waste-percent").value) || 0;

        let totalArea = 0;
        let totalRidge = 0;
        const breakdown = [];

        sectionsContainer
          .querySelectorAll("[data-index]")
          .forEach((section, idx) => {
            const length =
              parseFloat(section.querySelector(".section-length").value) || 0;
            const width =
              parseFloat(section.querySelector(".section-width").value) || 0;
            const overhang =
              parseFloat(section.querySelector(".section-overhang").value) || 0;
            const rise =
              parseFloat(section.querySelector(".section-pitch-rise").value) ||
              0;
            const run =
              parseFloat(section.querySelector(".section-pitch-run").value) ||
              12;
            const ridge =
              parseFloat(section.querySelector(".section-ridge").value) || 0;

            const lengthEff = length + 2 * overhang;
            const widthEff = width + 2 * overhang;
            const footprint = Math.max(lengthEff, 0) * Math.max(widthEff, 0);

            const slopeFactor = Math.sqrt(1 + Math.pow(rise / run, 2));
            const slopedArea = footprint * slopeFactor;

            totalArea += slopedArea;
            totalRidge += ridge;

            breakdown.push({
              index: idx + 1,
              footprint,
              slopedArea,
              ridge,
            });
          });

        if (totalArea <= 0) {
          alert(
            "Please enter at least one roof section with non-zero dimensions."
          );
          return;
        }

        const areaWithWaste = totalArea * (1 + wastePercent / 100);

        // Material coverage & pricing
        const shingleCoverage =
          parseFloat(document.getElementById("shingle-coverage").value) ||
          (isMetric ? 3.1 : 33.3);
        const underlaymentCoverage =
          parseFloat(document.getElementById("underlayment-coverage").value) ||
          (isMetric ? 18.6 : 200);
        const ridgeCoverage =
          parseFloat(document.getElementById("ridge-coverage").value) ||
          (isMetric ? 10 : 33);

        const shinglePrice =
          parseFloat(document.getElementById("shingle-price").value) || 0;
        const underlaymentPrice =
          parseFloat(document.getElementById("underlayment-price").value) || 0;
        const ridgePrice =
          parseFloat(document.getElementById("ridge-price").value) || 0;
        const nailsPerSq =
          parseFloat(document.getElementById("nails-per-sq").value) || 0;
        const laborRate =
          parseFloat(document.getElementById("labor-rate").value) || 0;

        const areaUnit = isMetric ? "m²" : "sq ft";
        const lengthUnit = isMetric ? "m" : "ft";

        const areaDisplay = totalArea.toFixed(1) + " " + areaUnit;
        const areaWasteDisplay = areaWithWaste.toFixed(1) + " " + areaUnit;

        // Squares: 100 sq ft or 10 m² approx
        const squareSize = isMetric ? 10 : 100;
        const squares = areaWithWaste / squareSize;

        const bundles = areaWithWaste / shingleCoverage;
        const rolls = areaWithWaste / underlaymentCoverage;
        const ridgeBundles = ridgeCoverage > 0 ? totalRidge / ridgeCoverage : 0;
        const totalNails =
          nailsPerSq > 0 ? (areaWithWaste / 100) * nailsPerSq : 0;

        const shingleCost = bundles * shinglePrice;
        const underlaymentCost = rolls * underlaymentPrice;
        const ridgeCost = ridgeBundles * ridgePrice;
        const laborCost = laborRate > 0 ? squares * laborRate : 0;
        const materialCost = shingleCost + underlaymentCost + ridgeCost;
        const totalCost = materialCost + laborCost;

        // Populate results
        document.getElementById("result-area").textContent = areaDisplay;
        document.getElementById("result-area-waste").textContent =
          areaWasteDisplay;
        document.getElementById(
          "result-squares"
        ).textContent = `${squares.toFixed(2)} ${
          isMetric
            ? "equivalent squares (10 m² each)"
            : "roofing squares (100 sq ft each)"
        }`;

        document.getElementById(
          "result-bundles"
        ).textContent = `Shingle bundles: ${bundles.toFixed(1)} (approx.)`;
        document.getElementById(
          "result-underlayment"
        ).textContent = `Underlayment rolls: ${rolls.toFixed(1)} (approx.)`;
        document.getElementById(
          "result-ridge"
        ).textContent = `Ridge cap bundles: ${ridgeBundles.toFixed(
          1
        )} (approx.), total ridge ${totalRidge.toFixed(1)} ${lengthUnit}`;
        document.getElementById("result-nails").textContent =
          nailsPerSq > 0
            ? `Roofing nails: ~${Math.round(
                totalNails
              ).toLocaleString()} pieces`
            : "Roofing nails: (enter nails per 100 sq ft to estimate)";

        document.getElementById(
          "result-material-cost"
        ).textContent = `Estimated material cost: $${materialCost.toFixed(2)}`;
        document.getElementById("result-labor-cost").textContent =
          laborRate > 0
            ? `Estimated labor cost: $${laborCost.toFixed(2)}`
            : "Estimated labor cost: (enter labor rate to estimate)";
        document.getElementById(
          "result-total-cost"
        ).textContent = `Total estimated cost: $${totalCost.toFixed(2)}`;

        // Section breakdown
        const breakdownEl = document.getElementById("section-breakdown");
        breakdownEl.innerHTML =
          '<h3 class="font-semibold mb-2">Section breakdown</h3>';
        breakdown.forEach((sec) => {
          const p = document.createElement("p");
          p.className = "mb-1";
          p.textContent = `Section #${
            sec.index
          }: footprint ${sec.footprint.toFixed(
            1
          )} ${areaUnit}, sloped area ${sec.slopedArea.toFixed(
            1
          )} ${areaUnit}, ridge ${sec.ridge.toFixed(1)} ${lengthUnit}`;
          breakdownEl.appendChild(p);
        });

