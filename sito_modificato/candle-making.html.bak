    <script>
      // Utility functions
      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function convertLengthToCm(value, unit) {
        if (!value || value <= 0) return 0;
        return unit === "in" ? value * 2.54 : value;
      }

      function convertWeight(value, fromUnit, toUnit) {
        if (!value || value <= 0 || fromUnit === toUnit) return value;
        const OZ_PER_G = 0.0352739619;
        return fromUnit === "g" && toUnit === "oz"
          ? value * OZ_PER_G
          : value / OZ_PER_G;
      }

      // Wax presets
      const waxPresets = {
        soy: {
          density: 0.9,
          maxLoad: 10,
          note: "Typical max fragrance load: 6–10% for soy. Always check your wax datasheet.",
        },
        paraffin: {
          density: 0.88,
          maxLoad: 12,
          note: "Typical max fragrance load: 8–12% for paraffin container wax.",
        },
        beeswax: {
          density: 0.96,
          maxLoad: 8,
          note: "Typical max fragrance load: 4–8% for beeswax. Many beeswax candles are unscented.",
        },
        blend: {
          density: 0.89,
          maxLoad: 10,
          note: "Typical max fragrance load: 6–10% for soy–paraffin blends.",
        },
        custom: {
          density: 0.9,
          maxLoad: 10,
          note: "Set a custom density if you know it, and follow your wax manufacturer’s max load.",
        },
      };

      function updateWaxHint() {
        const waxType = document.getElementById("waxType").value;
        const hint = document.getElementById("waxHint");
        const preset = waxPresets[waxType] || waxPresets.soy;
        hint.textContent = preset.note;
      }

      function getActiveDensity() {
        const waxType = document.getElementById("waxType").value;
        const customDensity = parseFloat(
          document.getElementById("customDensity").value
        );
        if (
          !isNaN(customDensity) &&
          customDensity > 0.5 &&
          customDensity < 1.2
        ) {
          return customDensity;
        }
        const preset = waxPresets[waxType] || waxPresets.soy;
        return preset.density;
      }

      function getMaxFragranceLoad() {
        const waxType = document.getElementById("waxType").value;
        const preset = waxPresets[waxType] || waxPresets.soy;
        return preset.maxLoad;
      }

      function updateFragranceWarning(load) {
        const warningEl = document.getElementById("fragranceWarning");
        const maxLoad = getMaxFragranceLoad();
        if (isNaN(load) || load <= 0) {
          warningEl.classList.add("hidden");
          return;
        }
        if (load > maxLoad) {
          warningEl.textContent = `Warning: ${load}% is above the typical safe maximum (${maxLoad}% for this wax type). Check your wax datasheet.`;
          warningEl.classList.remove("hidden");
        } else if (load > maxLoad - 1) {
          warningEl.textContent = `Caution: ${load}% is near the upper limit (${maxLoad}%). Test carefully for sweating and burn issues.`;
          warningEl.classList.remove("hidden");
        } else {
          warningEl.classList.add("hidden");
        }
      }

      function suggestWick(diameterCm, waxType) {
        if (!diameterCm || diameterCm <= 0) {
          return "Enter a container diameter to see a wick suggestion.";
        }
        let base = "";
        if (diameterCm < 5) {
          base =
            "Small container: try a small cotton wick (e.g., CD 4–6 or ECO 1–2).";
        } else if (diameterCm < 7.5) {
          base =
            "Medium container: try a medium cotton wick (e.g., CD 8–10 or ECO 4–6).";
        } else if (diameterCm < 9) {
          base =
            "Large container: try a large cotton wick (e.g., CD 12–14 or ECO 8–10).";
        } else {
          base =
            "Very wide container: consider double-wicking with two medium wicks.";
        }

        let waxNote = "";
        if (waxType === "soy" || waxType === "blend") {
          waxNote =
            " Soy wax often needs slightly larger wicks than paraffin for the same diameter.";
        } else if (waxType === "beeswax") {
          waxNote =
            " Beeswax burns hotter; you may need a slightly smaller wick than for soy.";
        }

        return base + waxNote + " Always perform a full burn test.";
      }

      function calculateRecipe() {
        const modeByVolume = !document
          .getElementById("containerInputs")
          .classList.contains("hidden");
        const unit = document.querySelector('input[name="unit"]:checked').value;
        const numCandles =
          parseInt(document.getElementById("numCandles").value, 10) || 0;
        const fragranceLoad =
          parseFloat(document.getElementById("fragranceLoad").value) || 0;
        const waxType = document.getElementById("waxType").value;
        const density = getActiveDensity();

        if (fragranceLoad < 0 || fragranceLoad >= 50) {
          alert("Please enter a realistic fragrance load between 0 and 40%.");
          return;
        }
        if (numCandles <= 0) {
          alert("Please enter a valid number of candles.");
          return;
        }

        let totalWaxG = 0;
        let diameterCm = null;

        if (modeByVolume) {
          const diameter =
            parseFloat(document.getElementById("containerDiameter").value) || 0;
          const fillHeight =
            parseFloat(document.getElementById("fillHeight").value) || 0;
          const diameterUnit = document.getElementById("diameterUnit").value;
          const heightUnit = document.getElementById("heightUnit").value;

          if (diameter <= 0 || fillHeight <= 0) {
            alert("Please enter a positive diameter and fill height.");
            return;
          }

          const dCm = convertLengthToCm(diameter, diameterUnit);
          const hCm = convertLengthToCm(fillHeight, heightUnit);
          diameterCm = dCm;

          const radiusCm = dCm / 2;
          const volumePerCandleMl = Math.PI * Math.pow(radiusCm, 2) * hCm; // cm³ ≈ ml
          const waxPerCandleG = volumePerCandleMl * density;
          totalWaxG = waxPerCandleG * numCandles;
        } else {
          const knownWax =
            parseFloat(document.getElementById("knownWaxWeight").value) || 0;
          const knownWaxUnit = document.getElementById("knownWaxUnit").value;
          if (knownWax <= 0) {
            alert("Please enter a positive wax weight.");
            return;
          }
          totalWaxG = convertWeight(knownWax, knownWaxUnit, "g");
          const diameter =
            parseFloat(document.getElementById("containerDiameter").value) || 0;
          const diameterUnit = document.getElementById("diameterUnit").value;
          if (diameter > 0) {
            diameterCm = convertLengthToCm(diameter, diameterUnit);
          }
        }

        if (totalWaxG <= 0) {
          alert("Could not compute wax weight. Please check your inputs.");
          return;
        }

        const fragranceG = (fragranceLoad / (100 - fragranceLoad)) * totalWaxG;
        const totalCandleG = totalWaxG + fragranceG;

        const waxPerCandleG = totalWaxG / numCandles;
        const fragrancePerCandleG = fragranceG / numCandles;
        const weightPerCandleG = totalCandleG / numCandles;

        const totalWaxDisplay = convertWeight(totalWaxG, "g", unit);
        const totalFragDisplay = convertWeight(fragranceG, "g", unit);
        const totalCandleDisplay = convertWeight(totalCandleG, "g", unit);

        const waxPerCandleDisplay = convertWeight(waxPerCandleG, "g", unit);
        const fragPerCandleDisplay = convertWeight(
          fragrancePerCandleG,
          "g",
          unit
        );
        const weightPerCandleDisplay = convertWeight(
          weightPerCandleG,
          "g",
          unit
        );

        const unitLabel = unit;

        document.getElementById("totalWax").textContent = `${round(
          totalWaxDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("totalFragrance").textContent = `${round(
          totalFragDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("totalCandleWeight").textContent = `${round(
          totalCandleDisplay,
          1
        )} ${unitLabel}`;

        document.getElementById("waxPerCandle").textContent = `${round(
          waxPerCandleDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("fragrancePerCandle").textContent = `${round(
          fragPerCandleDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("weightPerCandle").textContent = `${round(
          weightPerCandleDisplay,
          1
        )} ${unitLabel}`;

        document.getElementById("tableWaxPer").textContent = `${round(
          waxPerCandleDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("tableWaxTotal").textContent = `${round(
          totalWaxDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("tableFragPer").textContent = `${round(
          fragPerCandleDisplay,
          1
        )} ${unitLabel}`;
        document.getElementById("tableFragTotal").textContent = `${round(
          totalFragDisplay,
          1
        )} ${unitLabel}`;

        const wickText = suggestWick(diameterCm, waxType);
        document.getElementById("wickSuggestion").textContent = wickText;
      }

      function resetCalculator() {
        document.getElementById("waxType").value = "soy";
        document.querySelector('input[name="unit"][value="g"]').checked = true;
        document.getElementById("numCandles").value = 1;
        document.getElementById("containerDiameter").value = 7.5;
        document.getElementById("fillHeight").value = 6;
        document.getElementById("diameterUnit").value = "cm";
        document.getElementById("heightUnit").value = "cm";
        document.getElementById("knownWaxWeight").value = 500;
        document.getElementById("knownWaxUnit").value = "g";
        document.getElementById("fragranceLoad").value = 8;
        document.getElementById("customDensity").value = "";
        updateWaxHint();
        updateFragranceWarning(8);

        [
          "totalWax",
          "totalFragrance",
          "totalCandleWeight",
          "waxPerCandle",
          "fragrancePerCandle",
          "weightPerCandle",
          "tableWaxPer",
          "tableWaxTotal",
          "tableFragPer",
          "tableFragTotal",
        ].forEach((id) => {
          document.getElementById(id).textContent = "–";
        });
        document.getElementById("wickSuggestion").textContent =
          "Enter a container diameter to see a wick suggestion.";
        document.getElementById("fragranceWarning").classList.add("hidden");
      }

      function setMode(byVolume) {
        const modeByVolumeBtn = document.getElementById("mode-by-volume");
        const modeByWaxBtn = document.getElementById("mode-by-wax");
        const containerInputs = document.getElementById("containerInputs");
        const waxInputs = document.getElementById("waxInputs");
        const candlesCountGroup = document.getElementById("candlesCountGroup");

        if (byVolume) {
          containerInputs.classList.remove("hidden");
          waxInputs.classList.add("hidden");
          modeByVolumeBtn.classList.add("bg-blue-600", "text-white");
          modeByVolumeBtn.classList.remove("bg-gray-100", "text-gray-700");
          modeByWaxBtn.classList.add("bg-gray-100", "text-gray-700");
          modeByWaxBtn.classList.remove("bg-blue-600", "text-white");
          candlesCountGroup.classList.remove("hidden");
        } else {
          containerInputs.classList.remove("hidden"); // keep diameter for wick suggestion
          waxInputs.classList.remove("hidden");
          modeByWaxBtn.classList.add("bg-blue-600", "text-white");
          modeByWaxBtn.classList.remove("bg-gray-100", "text-gray-700");
          modeByVolumeBtn.classList.add("bg-gray-100", "text-gray-700");
          modeByVolumeBtn.classList.remove("bg-blue-600", "text-white");
          candlesCountGroup.classList.remove("hidden");
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateWaxHint();
        updateFragranceWarning(
          parseFloat(document.getElementById("fragranceLoad").value) || 0
        );

        document
          .getElementById("waxType")
          .addEventListener("change", function () {
            updateWaxHint();
            updateFragranceWarning(
              parseFloat(document.getElementById("fragranceLoad").value) || 0
            );
          });

        document
          .getElementById("fragranceLoad")
          .addEventListener("input", function () {
            const val = parseFloat(this.value) || 0;
            updateFragranceWarning(val);
          });

        document
          .getElementById("resetDensity")
          .addEventListener("click", function () {
            document.getElementById("customDensity").value = "";
          });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateRecipe);
        document
          .getElementById("resetBtn")
          .addEventListener("click", resetCalculator);

        document
          .getElementById("mode-by-volume")
          .addEventListener("click", function () {
            setMode(true);
          });
        document
          .getElementById("mode-by-wax")
          .addEventListener("click", function () {
            setMode(false);
          });

        resetCalculator();
      });
    </script>

