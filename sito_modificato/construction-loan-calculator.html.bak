      // Utility: format currency
      function fmtCurrency(value) {
        if (isNaN(value)) return "-";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      // Utility: format currency with cents
      function fmtCurrency2(value) {
        if (isNaN(value)) return "-";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      // Tabs
      const tabSimple = document.getElementById("tab-simple");
      const tabAdvanced = document.getElementById("tab-advanced");
      const simpleSection = document.getElementById("simple-draws-section");
      const advancedSection = document.getElementById("advanced-draws-section");

      tabSimple.addEventListener("click", () => {
        tabSimple.className =
          "py-2 px-1 border-b-2 border-blue-600 text-blue-600 font-semibold text-sm md:text-base";
        tabAdvanced.className =
          "py-2 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 text-sm md:text-base";
        simpleSection.classList.remove("hidden");
        advancedSection.classList.add("hidden");
      });

      tabAdvanced.addEventListener("click", () => {
        tabAdvanced.className =
          "py-2 px-1 border-b-2 border-blue-600 text-blue-600 font-semibold text-sm md:text-base";
        tabSimple.className =
          "py-2 px-1 border-b-2 border-transparent text-gray-500 hover:text-gray-700 text-sm md:text-base";
        simpleSection.classList.add("hidden");
        advancedSection.classList.remove("hidden");
      });

      // Permanent mortgage enable/disable
      const enablePermanent = document.getElementById("enablePermanent");
      const permanentSection = document.getElementById("permanent-section");
      const permBalanceOption = document.getElementById("permBalanceOption");
      const permCustomWrapper = document.getElementById("permCustomWrapper");

      enablePermanent.addEventListener("change", () => {
        if (enablePermanent.checked) {
          permanentSection.classList.remove(
            "opacity-40",
            "pointer-events-none"
          );
        } else {
          permanentSection.classList.add("opacity-40", "pointer-events-none");
        }
      });

      permBalanceOption.addEventListener("change", () => {
        if (permBalanceOption.value === "custom") {
          permCustomWrapper.classList.remove("hidden");
        } else {
          permCustomWrapper.classList.add("hidden");
        }
      });

      // Advanced draw rows
      const drawRowsBody = document.getElementById("draw-rows");
      const addDrawRowBtn = document.getElementById("add-draw-row");
      const drawWarning = document.getElementById("draw-warning");

      function addDrawRow(amount = 100000, month = 1) {
        const rowIndex = drawRowsBody.children.length + 1;
        const tr = document.createElement("tr");

        tr.innerHTML = `
      <td class="px-3 py-2 text-gray-600">${rowIndex}</td>
      <td class="px-3 py-2">
        <input type="number" class="w-full border border-gray-300 rounded px-2 py-1 text-xs draw-amount" min="0" step="1000" value="${amount}">
      </td>
      <td class="px-3 py-2">
        <input type="number" class="w-full border border-gray-300 rounded px-2 py-1 text-xs draw-month" min="1" step="1" value="${month}">
      </td>
      <td class="px-3 py-2 text-right">
        <button type="button" class="text-red-500 text-xs remove-draw">Remove</button>
      </td>
    `;
        drawRowsBody.appendChild(tr);
      }

      addDrawRowBtn.addEventListener("click", () => {
        const cm = parseInt(
          document.getElementById("constructionMonths").value || "12",
          10
        );
        const nextMonth = Math.min(cm, drawRowsBody.children.length + 1);
        addDrawRow(100000, nextMonth);
      });

      drawRowsBody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-draw")) {
          e.target.closest("tr").remove();
          // Re-number rows
          Array.from(drawRowsBody.children).forEach((row, idx) => {
            row.children[0].textContent = idx + 1;
          });
        }
      });

      // Initialize some default advanced rows
      addDrawRow(100000, 1);
      addDrawRow(150000, 4);
      addDrawRow(150000, 8);

      // Calculation
      const calculateBtn = document.getElementById("calculateBtn");
      const resetBtn = document.getElementById("resetBtn");
      const errorMsg = document.getElementById("errorMsg");
      const resultsSection = document.getElementById("results-section");

      function calculate() {
        errorMsg.textContent = "";
        drawWarning.classList.add("hidden");
        const projectCost = parseFloat(
          document.getElementById("projectCost").value
        );
        const loanAmount = parseFloat(
          document.getElementById("loanAmount").value
        );
        const constructionRate =
          parseFloat(document.getElementById("constructionRate").value) / 100;
        const constructionMonths = parseInt(
          document.getElementById("constructionMonths").value,
          10
        );
        const interestFreq = document.getElementById("interestOnlyFreq").value;
        const numDraws = parseInt(
          document.getElementById("numDraws").value,
          10
        );

        if (
          !projectCost ||
          !loanAmount ||
          !constructionRate ||
          !constructionMonths ||
          projectCost <= 0 ||
          loanAmount <= 0 ||
          constructionMonths <= 0
        ) {
          errorMsg.textContent =
            "Please enter valid project, loan, rate, and period values.";
          resultsSection.classList.add("hidden");
          return;
        }

        // Build monthly draw schedule
        const monthlyDraws = new Array(constructionMonths).fill(0);
        let totalDraws = 0;

        if (!advancedSection.classList.contains("hidden")) {
          // Advanced mode
          const amountInputs = drawRowsBody.querySelectorAll(".draw-amount");
          const monthInputs = drawRowsBody.querySelectorAll(".draw-month");
          for (let i = 0; i < amountInputs.length; i++) {
            const amt = parseFloat(amountInputs[i].value) || 0;
            let m = parseInt(monthInputs[i].value, 10);
            if (m < 1) m = 1;
            if (m > constructionMonths) m = constructionMonths;
            monthlyDraws[m - 1] += amt;
            totalDraws += amt;
          }
          if (totalDraws > loanAmount + 1e-6) {
            drawWarning.textContent =
              "Warning: total custom draws exceed the construction loan amount. They will be capped at the loan limit in calculations.";
            drawWarning.classList.remove("hidden");
          }
        } else {
          // Simple mode: even draws
          const draws = Math.max(
            1,
            Math.min(numDraws || 1, constructionMonths)
          );
          const drawAmount = loanAmount / draws;
          const interval = constructionMonths / draws;
          for (let i = 0; i < draws; i++) {
            const monthIndex = Math.min(
              constructionMonths - 1,
              Math.round(i * interval)
            );
            monthlyDraws[monthIndex] += drawAmount;
            totalDraws += drawAmount;
          }
        }

        // Cap total draws at loanAmount
        if (totalDraws > loanAmount) {
          const scale = loanAmount / totalDraws;
          for (let i = 0; i < monthlyDraws.length; i++) {
            monthlyDraws[i] *= scale;
          }
          totalDraws = loanAmount;
        }

        // Determine interest period rate
        let periodsPerYear = 12;
        if (interestFreq === "weekly") periodsPerYear = 52;
        if (interestFreq === "biweekly") periodsPerYear = 26;
        const periodRate = constructionRate / periodsPerYear;

        // Build balance and interest schedule (monthly snapshot)
        let balance = 0;
        let totalInterest = 0;
        let sumBalances = 0;
        const monthlySnapshot = [];

        for (let m = 0; m < constructionMonths; m++) {
          balance += monthlyDraws[m];
          // Approximate interest for the month using monthly rate
          const monthInterest = balance * (constructionRate / 12);
          totalInterest += monthInterest;
          sumBalances += balance;
          monthlySnapshot.push({
            month: m + 1,
            draw: monthlyDraws[m],
            balance: balance,
            interest: monthInterest,
          });
        }

        const avgBalance = sumBalances / constructionMonths;
        const typicalMonthlyInterest = avgBalance * (constructionRate / 12);

        // Permanent mortgage calculations
        let permPrincipal = 0;
        let permPayment = 0;
        let permInterest = 0;
        const resPermPrincipal = document.getElementById("resPermPrincipal");
        const resPermPayment = document.getElementById("resPermPayment");
        const resPermInterest = document.getElementById("resPermInterest");
        const resTotalAllInterest = document.getElementById(
          "resTotalAllInterest"
        );
        const permNote = document.getElementById("permNote");

        if (enablePermanent.checked) {
          const permRate =
            parseFloat(document.getElementById("permRate").value) / 100;
          const permYears = parseInt(
            document.getElementById("permYears").value,
            10
          );
          const permBalanceOptionVal = permBalanceOption.value;
          const permCustomAmount = parseFloat(
            document.getElementById("permCustomAmount").value
          );

          if (!permRate || !permYears) {
            errorMsg.textContent =
              "Please enter a valid permanent mortgage rate and term.";
            resultsSection.classList.add("hidden");
            return;
          }

          permPrincipal =
            permBalanceOptionVal === "custom" && permCustomAmount > 0
              ? permCustomAmount
              : balance;
          const n = permYears * 12;
          const i = permRate / 12;
          if (i === 0) {
            permPayment = permPrincipal / n;
            permInterest = 0;
          } else {
            permPayment =
              (permPrincipal * (i * Math.pow(1 + i, n))) /
              (Math.pow(1 + i, n) - 1);
            permInterest = permPayment * n - permPrincipal;
          }

          resPermPrincipal.textContent = fmtCurrency(permPrincipal);
          resPermPayment.textContent = fmtCurrency2(permPayment);
          resPermInterest.textContent = fmtCurrency(permInterest);
          resTotalAllInterest.textContent = fmtCurrency(
            totalInterest + permInterest
          );
          permNote.textContent =
            "Assumes a fully amortizing fixed-rate mortgage with level monthly payments.";
        } else {
          resPermPrincipal.textContent = "-";
          resPermPayment.textContent = "-";
          resPermInterest.textContent = "-";
          resTotalAllInterest.textContent = fmtCurrency(totalInterest);
          permNote.textContent =
            "Permanent mortgage not included. Enable it above to estimate long-term payments.";
        }

        // Cash required
        const equity = Math.max(0, projectCost - totalDraws);

        // Populate results
        document.getElementById("resTotalDraws").textContent =
          fmtCurrency(totalDraws);
        document.getElementById("resAvgBalance").textContent =
          fmtCurrency(avgBalance);
        document.getElementById("resTotalInterest").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("resTypicalPayment").textContent = fmtCurrency2(
          typicalMonthlyInterest
        );
        document.getElementById("resProjectCost").textContent =
          fmtCurrency(projectCost);
        document.getElementById("resLoanUsed").textContent =
          fmtCurrency(totalDraws);
        document.getElementById("resEquity").textContent = fmtCurrency(equity);

        // Timeline table (first 12 months or full period)
        const timelineBody = document.getElementById("timelineBody");
        timelineBody.innerHTML = "";
        const maxRows = Math.min(12, constructionMonths);
        for (let i = 0; i < maxRows; i++) {
          const row = monthlySnapshot[i];
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1">${row.month}</td>
        <td class="px-2 py-1 text-right">${fmtCurrency(row.draw)}</td>
        <td class="px-2 py-1 text-right">${fmtCurrency(row.balance)}</td>
        <td class="px-2 py-1 text-right">${fmtCurrency2(row.interest)}</td>
      `;
          timelineBody.appendChild(tr);
        }

        resultsSection.classList.remove("hidden");
      }

      calculateBtn.addEventListener("click", calculate);

      resetBtn.addEventListener("click", () => {
        document.getElementById("projectCost").value = 500000;
        document.getElementById("loanAmount").value = 400000;
        document.getElementById("constructionRate").value = 8;
        document.getElementById("constructionMonths").value = 12;
        document.getElementById("interestOnlyFreq").value = "monthly";
        document.getElementById("numDraws").value = 4;
        enablePermanent.checked = false;
        permanentSection.classList.add("opacity-40", "pointer-events-none");
        permBalanceOption.value = "loanBalance";
        permCustomWrapper.classList.add("hidden");
        errorMsg.textContent = "";
        drawWarning.classList.add("hidden");
        resultsSection.classList.add("hidden");
        // Reset advanced rows
        drawRowsBody.innerHTML = "";
        addDrawRow(100000, 1);
        addDrawRow(150000, 4);
        addDrawRow(150000, 8);
        // Switch back to simple tab
        tabSimple.click();
      });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              icon.textContent = "−";
            } else {
              answer.classList.add("hidden");
              icon.textContent = "+";
            }
          });
        });

      // Mobile menu script (in case mobile-menu.js not yet loaded)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });
      }
    </script>

