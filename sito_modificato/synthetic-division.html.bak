    <script>
      // --- Polynomial parsing and formatting helpers ---
      function parsePolynomial(str) {
        if (!str || !str.trim()) throw new Error("Please enter a polynomial.");
        str = str.replace(/\s+/g, "");
        // Normalize leading sign
        if (str[0] !== "-" && str[0] !== "+") str = "+" + str;

        const termRegex = /([+-])([^+-]+)/g;
        let match;
        const terms = [];
        while ((match = termRegex.exec(str)) !== null) {
          const sign = match[1] === "-" ? -1 : 1;
          const body = match[2];
          let coeff, exp;

          if (body.includes("x")) {
            const parts = body.split("x");
            const coeffPart = parts[0];
            const expPart = parts[1];

            if (coeffPart === "" || coeffPart === "+") coeff = 1;
            else if (coeffPart === "-") coeff = -1;
            else coeff = parseFloat(coeffPart);

            if (isNaN(coeff))
              throw new Error("Invalid coefficient in term '" + body + "'.");

            if (!expPart) exp = 1;
            else {
              const m = /^\^(-?\d+)$/.exec(expPart);
              if (!m)
                throw new Error(
                  "Invalid exponent in term '" + body + "'. Use x^n."
                );
              exp = parseInt(m[1], 10);
            }
          } else {
            coeff = parseFloat(body);
            if (isNaN(coeff))
              throw new Error("Invalid constant term '" + body + "'.");
            exp = 0;
          }
          terms.push({ coeff: sign * coeff, exp });
        }

        if (terms.length === 0) throw new Error("Could not parse polynomial.");
        const maxExp = Math.max(...terms.map((t) => t.exp));
        if (maxExp < 0)
          throw new Error("Polynomial degree must be non-negative.");

        const coeffs = new Array(maxExp + 1).fill(0);
        for (const t of terms) {
          if (t.exp < 0)
            throw new Error("Negative exponents are not supported.");
          coeffs[maxExp - t.exp] += t.coeff;
        }
        return coeffs;
      }

      function formatPolynomial(coeffs) {
        // coeffs: [a0, a1, ..., an] for descending powers
        let n = coeffs.length - 1;
        // trim leading zeros
        let firstNonZero = 0;
        while (
          firstNonZero < coeffs.length &&
          Math.abs(coeffs[firstNonZero]) < 1e-12
        )
          firstNonZero++;
        if (firstNonZero === coeffs.length) return "0";
        let terms = [];
        for (let i = firstNonZero; i < coeffs.length; i++) {
          const c = coeffs[i];
          if (Math.abs(c) < 1e-12) continue;
          const exp = n - (i - firstNonZero) - (firstNonZero ? 0 : 0);
        }
        // Recompute with simpler indexing
        const deg = coeffs.length - 1;
        terms = [];
        for (let i = 0; i < coeffs.length; i++) {
          const c = coeffs[i];
          if (Math.abs(c) < 1e-12) continue;
          const power = deg - i;
          const sign = c < 0 ? "-" : "+";
          const absC = Math.abs(c);
          let coeffStr = "";
          if (power === 0) {
            coeffStr = absC.toString();
          } else {
            if (Math.abs(absC - 1) < 1e-12) coeffStr = "";
            else coeffStr = absC.toString();
            coeffStr += "x";
            if (power !== 1) coeffStr += "^" + power;
          }
          terms.push({ sign, coeffStr });
        }
        if (terms.length === 0) return "0";
        let out = "";
        terms.forEach((t, idx) => {
          if (idx === 0) {
            out += (t.sign === "-" ? "-" : "") + t.coeffStr;
          } else {
            out += " " + t.sign + " " + t.coeffStr;
          }
        });
        return out;
      }

      function syntheticDivide(coeffs, c) {
        const n = coeffs.length;
        const bottom = new Array(n);
        const multRow = new Array(n).fill(0);
        bottom[0] = coeffs[0];
        for (let i = 1; i < n; i++) {
          multRow[i] = bottom[i - 1] * c;
          bottom[i] = coeffs[i] + multRow[i];
        }
        const remainder = bottom[n - 1];
        const quotient = bottom.slice(0, n - 1);
        return { quotient, remainder, bottom, multRow };
      }

      function buildTableHTML(coeffs, c, multRow, bottom) {
        const deg = coeffs.length - 1;
        const header = document.createElement("div");
        header.className =
          "inline-block border border-gray-300 rounded-md p-2 bg-gray-50";

        const container = document.createElement("div");
        container.className = "space-y-1 text-sm";

        const cRow = document.createElement("div");
        cRow.className = "flex items-center gap-2";
        const cLabel = document.createElement("span");
        cLabel.textContent = "c =";
        const cVal = document.createElement("span");
        cVal.className = "font-mono";
        cVal.textContent = c;
        cRow.appendChild(cLabel);
        cRow.appendChild(cVal);
        container.appendChild(cRow);

        const coeffRow = document.createElement("div");
        coeffRow.className = "matrix-row";
        coeffs.forEach((v) => {
          const cell = document.createElement("div");
          cell.className = "matrix-cell border-b border-gray-300 font-mono";
          cell.textContent = v;
          coeffRow.appendChild(cell);
        });
        container.appendChild(coeffRow);

        const multRowDiv = document.createElement("div");
        multRowDiv.className = "matrix-row";
        multRow.forEach((v, idx) => {
          const cell = document.createElement("div");
          cell.className = "matrix-cell font-mono text-gray-500";
          cell.textContent = idx === 0 ? "" : v;
          multRowDiv.appendChild(cell);
        });
        container.appendChild(multRowDiv);

        const bottomRow = document.createElement("div");
        bottomRow.className = "matrix-row border-t border-gray-300 pt-1";
        bottom.forEach((v) => {
          const cell = document.createElement("div");
          cell.className = "matrix-cell font-mono";
          cell.textContent = v;
          bottomRow.appendChild(cell);
        });
        container.appendChild(bottomRow);

        header.appendChild(container);
        return header;
      }

      function buildStepsHTML(coeffs, c, multRow, bottom) {
        const steps = [];
        const deg = coeffs.length - 1;
        steps.push(
          "Write the coefficients of the dividend in descending powers of x: " +
            coeffs.join(", ") +
            "."
        );
        steps.push("The divisor is x − c with c = " + c + ".");
        steps.push("Bring down the leading coefficient: " + bottom[0] + ".");

        for (let i = 1; i < coeffs.length; i++) {
          const prev = bottom[i - 1];
          const m = multRow[i];
          const sum = bottom[i];
          steps.push(
            "Multiply the previous bottom value by c: " +
              prev +
              " × " +
              c +
              " = " +
              m +
              ", then add to the next coefficient: " +
              coeffs[i] +
              " + " +
              m +
              " = " +
              sum +
              "."
          );
        }
        steps.push(
          "The last bottom value " +
            bottom[bottom.length - 1] +
            " is the remainder."
        );
        steps.push(
          "The other bottom values are the coefficients of the quotient polynomial, starting one degree lower than the original."
        );

        const frag = document.createDocumentFragment();
        steps.forEach((txt, idx) => {
          const div = document.createElement("div");
          div.className = "step-box";
          div.textContent = idx + 1 + ". " + txt;
          frag.appendChild(div);
        });
        return frag;
      }

      function evaluatePolynomial(coeffs, x) {
        // Horner's method
        let result = 0;
        for (let i = 0; i < coeffs.length; i++) {
          result = result * x + coeffs[i];
        }
        return result;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const polyInput = document.getElementById("poly-input");
        const cInput = document.getElementById("c-input");
        const aInput = document.getElementById("a-input");
        const bInput = document.getElementById("b-input");
        const modeXC = document.getElementById("mode-x-c");
        const modeAXB = document.getElementById("mode-ax-b");
        const divXC = document.getElementById("divisor-xc");
        const divAXB = document.getElementById("divisor-axb");
        const computeBtn = document.getElementById("compute-btn");
        const clearBtn = document.getElementById("clear-btn");
        const exampleBtn = document.getElementById("example-btn");
        const errorBox = document.getElementById("error-box");
        const resultsSection = document.getElementById("results-section");
        const resultDividend = document.getElementById("result-dividend");
        const resultDivisor = document.getElementById("result-divisor");
        const resultQuotient = document.getElementById("result-quotient");
        const resultRemainder = document.getElementById("result-remainder");
        const factorInfo = document.getElementById("factor-info");
        const factorText = document.getElementById("factor-text");
        const resultCheck = document.getElementById("result-check");
        const tableContainer = document.getElementById("table-container");
        const stepsContainer = document.getElementById("steps-container");

        let mode = "x-c"; // or "ax-b"

        modeXC.addEventListener("click", () => {
          mode = "x-c";
          modeXC.classList.add(
            "border-blue-500",
            "text-blue-600",
            "bg-blue-50"
          );
          modeXC.classList.remove("border-gray-300", "text-gray-700");
          modeAXB.classList.remove(
            "border-blue-500",
            "text-blue-600",
            "bg-blue-50"
          );
          modeAXB.classList.add("border-gray-300", "text-gray-700");
          divXC.classList.remove("hidden");
          divAXB.classList.add("hidden");
        });

        modeAXB.addEventListener("click", () => {
          mode = "ax-b";
          modeAXB.classList.add(
            "border-blue-500",
            "text-blue-600",
            "bg-blue-50"
          );
          modeAXB.classList.remove("border-gray-300", "text-gray-700");
          modeXC.classList.remove(
            "border-blue-500",
            "text-blue-600",
            "bg-blue-50"
          );
          modeXC.classList.add("border-gray-300", "text-gray-700");
          divXC.classList.add("hidden");
          divAXB.classList.remove("hidden");
        });

        exampleBtn.addEventListener("click", () => {
          polyInput.value = "2x^3 - 3x^2 + 4x - 5";
          modeXC.click();
          cInput.value = "2";
          errorBox.classList.add("hidden");
          resultsSection.classList.add("hidden");
        });

        clearBtn.addEventListener("click", () => {
          polyInput.value = "";
          cInput.value = "";
          aInput.value = "";
          bInput.value = "";
          errorBox.classList.add("hidden");
          resultsSection.classList.add("hidden");
        });

        computeBtn.addEventListener("click", () => {
          errorBox.classList.add("hidden");
          errorBox.textContent = "";
          resultsSection.classList.add("hidden");
          factorInfo.classList.add("hidden");
          tableContainer.innerHTML = "";
          stepsContainer.innerHTML = "";
          try {
            const coeffs = parsePolynomial(polyInput.value);
            if (coeffs.length < 2)
              throw new Error("Polynomial degree must be at least 1.");
            let c, divisorStr;
            if (mode === "x-c") {
              if (!cInput.value.trim())
                throw new Error("Please enter a value for c.");
              c = parseFloat(cInput.value);
              if (!isFinite(c)) throw new Error("Invalid value for c.");
              divisorStr = "x - (" + c + ")";
            } else {
              if (!aInput.value.trim() || !bInput.value.trim())
                throw new Error("Please enter both a and b for ax − b.");
              const a = parseFloat(aInput.value);
              const b = parseFloat(bInput.value);
              if (!isFinite(a) || !isFinite(b) || Math.abs(a) < 1e-12)
                throw new Error(
                  "Invalid values for a or b (a must be non-zero)."
                );
              c = b / a;
              divisorStr = a + "x - " + b;
            }

            const { quotient, remainder, bottom, multRow } = syntheticDivide(
              coeffs,
              c
            );

            resultDividend.textContent = formatPolynomial(coeffs);
            resultDivisor.textContent = divisorStr;

            // Adjust quotient if divisor is ax - b
            let quotientCoeffs = quotient.slice();
            if (mode === "ax-b") {
              const a = parseFloat(aInput.value);
              quotientCoeffs = quotientCoeffs.map((q) => q / a);
            }

            resultQuotient.textContent = formatPolynomial(quotientCoeffs);
            resultRemainder.textContent = remainder.toString();

            if (Math.abs(remainder) < 1e-10) {
              factorInfo.classList.remove("hidden");
              factorText.textContent =
                "Remainder is 0, so the divisor is a factor of the polynomial.";
            }

            // Check: f(x) = (divisor)*quotient + remainder (symbolic check via evaluation at c)
            const fAtC = evaluatePolynomial(coeffs, c);
            const qAtC = evaluatePolynomial(quotientCoeffs, c);
            let divisorAtC;
            if (mode === "x-c") {
              divisorAtC = c - c; // x - c at x=c is 0, but we can instead use identity remainder = f(c)
              resultCheck.textContent =
                "Remainder = f(" + c + ") = " + fAtC.toFixed(6) + ".";
            } else {
              const a = parseFloat(aInput.value);
              const b = parseFloat(bInput.value);
              divisorAtC = a * c - b;
              const lhs = fAtC;
              const rhs = divisorAtC * qAtC + remainder;
              resultCheck.textContent =
                "Check at x = " +
                c +
                ": f(x) ≈ " +
                lhs.toFixed(6) +
                ", divisor·quotient + remainder ≈ " +
                rhs.toFixed(6) +
                ".";
            }

            const table = buildTableHTML(coeffs, c, multRow, bottom);
            tableContainer.appendChild(table);

            const stepsFrag = buildStepsHTML(coeffs, c, multRow, bottom);
            stepsContainer.appendChild(stepsFrag);

            resultsSection.classList.remove("hidden");
          } catch (e) {
            errorBox.textContent = e.message;
            errorBox.classList.remove("hidden");
          }
        });
      });
    </script>

