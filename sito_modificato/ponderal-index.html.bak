    <script>
      // Unit toggle logic
      const unitButtons = document.querySelectorAll(".unit-toggle");
      const weightInput = document.getElementById("weight-input");
      const heightInput = document.getElementById("height-input");
      const weightUnitLabel = document.getElementById("weight-unit-label");
      const heightUnitLabel = document.getElementById("height-unit-label");
      const populationSelect = document.getElementById("population");
      const calcBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const resultsCard = document.getElementById("results-card");
      const piValueEl = document.getElementById("pi-value");
      const piAltUnitsEl = document.getElementById("pi-alt-units");
      const piCategoryEl = document.getElementById("pi-category");
      const piNoteEl = document.getElementById("pi-note");
      const newbornHint = document.getElementById("newborn-hint");

      let currentUnit = "metric";

      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const selected = btn.getAttribute("data-unit");
          if (selected === currentUnit) return;
          currentUnit = selected;

          unitButtons.forEach((b) => {
            const isActive = b.getAttribute("data-unit") === currentUnit;
            b.classList.toggle("bg-blue-600", isActive);
            b.classList.toggle("text-white", isActive);
            b.classList.toggle("border-blue-600", isActive);
            b.classList.toggle("bg-white", !isActive);
            b.classList.toggle("text-gray-700", !isActive);
            b.classList.toggle("border-gray-300", !isActive);
          });

          if (currentUnit === "metric") {
            weightUnitLabel.textContent = "(kg)";
            heightUnitLabel.textContent = "(cm)";
            // Optional: convert existing values approximately
            if (weightInput.value)
              weightInput.value = (
                parseFloat(weightInput.value) / 2.20462
              ).toFixed(2);
            if (heightInput.value)
              heightInput.value = (
                parseFloat(heightInput.value) * 2.54
              ).toFixed(1);
          } else {
            weightUnitLabel.textContent = "(lb)";
            heightUnitLabel.textContent = "(in)";
            if (weightInput.value)
              weightInput.value = (
                parseFloat(weightInput.value) * 2.20462
              ).toFixed(1);
            if (heightInput.value)
              heightInput.value = (
                parseFloat(heightInput.value) / 2.54
              ).toFixed(1);
          }

          resultsCard.classList.add("hidden");
          newbornHint.classList.toggle(
            "hidden",
            populationSelect.value !== "newborn"
          );
        });
      });

      populationSelect.addEventListener("change", () => {
        newbornHint.classList.toggle(
          "hidden",
          populationSelect.value !== "newborn"
        );
        if (!resultsCard.classList.contains("hidden")) {
          // Reinterpret same PI with new population
          interpretPI(
            parseFloat(piValueEl.textContent),
            populationSelect.value
          );
        }
      });

      function calculatePI() {
        const w = parseFloat(weightInput.value);
        const h = parseFloat(heightInput.value);

        if (!w || !h || w <= 0 || h <= 0) {
          alert("Please enter valid positive values for weight and height.");
          return;
        }

        let piMetric; // in kg/m^3

        if (currentUnit === "metric") {
          const heightM = h / 100; // cm to m
          piMetric = w / Math.pow(heightM, 3);
        } else {
          // imperial: PI = 12 * weight(lb) / height(in)^3, result already in kg/m^3
          piMetric = (12 * w) / Math.pow(h, 3);
        }

        if (!isFinite(piMetric) || piMetric <= 0) {
          alert(
            "The values provided lead to an invalid result. Please check your inputs."
          );
          return;
        }

        const piRounded = piMetric.toFixed(2);
        piValueEl.textContent = piRounded;

        // Show alternative representation: normalized to typical adult range
        piAltUnitsEl.textContent = `Equivalent to ${piRounded} kg/m³ (standard ponderal index units).`;
        piAltUnitsEl.classList.remove("hidden");

        interpretPI(piMetric, populationSelect.value);

        resultsCard.classList.remove("hidden");
        newbornHint.classList.toggle(
          "hidden",
          populationSelect.value !== "newborn"
        );
      }

      function interpretPI(pi, population) {
        let category = "Not classified";
        let note = "";

        if (population === "adult") {
          if (pi < 11) {
            category = "Low corpulence (possibly underweight)";
            note =
              "For adults, BMI and waist measurements are better validated for risk assessment. Consider discussing results with a healthcare professional.";
          } else if (pi <= 15) {
            category = "Typical adult range";
            note =
              "This PI falls within a commonly cited range for many adults, but there are no universally accepted PI cut-offs. Use together with BMI and other measures.";
          } else {
            category = "High corpulence (possibly overweight)";
            note =
              "A higher PI suggests greater mass relative to height. Combine this with BMI, waist circumference, and clinical advice for a full picture.";
          }
        } else if (population === "newborn") {
          if (pi < 23) {
            category = "Low for term newborn (possible wasting/IUGR)";
            note =
              "Low PI in term newborns may indicate intrauterine growth restriction or wasting. Interpretation must consider gestational age and clinical context.";
          } else if (pi <= 26) {
            category = "Typical range for term newborns";
            note =
              "This PI is within a commonly cited range for term newborns. Always interpret alongside birth history and clinical examination.";
          } else {
            category = "High for term newborn";
            note =
              "Higher PI may reflect relatively high mass for length (e.g., macrosomia or edema). Clinical assessment is essential.";
          }
        } else if (population === "child") {
          category = "Use age- and sex-specific reference charts";
          note =
            "In children and adolescents, PI (or tri-ponderal mass index) should be interpreted using age- and sex-specific percentiles. Consult pediatric growth charts or a clinician.";
        }

        piCategoryEl.textContent = category;
        piNoteEl.textContent = note;
      }

      calcBtn.addEventListener("click", calculatePI);

      resetBtn.addEventListener("click", () => {
        weightInput.value = "";
        heightInput.value = "";
        resultsCard.classList.add("hidden");
        piValueEl.textContent = "–";
        piCategoryEl.textContent = "–";
        piNoteEl.textContent = "";
        piAltUnitsEl.textContent = "";
        piAltUnitsEl.classList.add("hidden");
      });
    </script>

