    <script>
      // Utility: format currency
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }
      // Utility: format percent
      function fmtPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function syncTermInputs(from) {
        const yearsInput = document.getElementById("rv-term-years");
        const monthsSlider = document.getElementById("rv-term-months");
        if (from === "years") {
          let years = parseInt(yearsInput.value, 10);
          if (isNaN(years) || years < 1) years = 1;
          if (years > 20) years = 20;
          yearsInput.value = years;
          monthsSlider.value = years * 12;
        } else {
          let months = parseInt(monthsSlider.value, 10);
          if (isNaN(months) || months < 12) months = 12;
          if (months > 240) months = 240;
          monthsSlider.value = months;
          yearsInput.value = (months / 12).toFixed(0);
        }
        document.getElementById("rv-term-months-label").textContent =
          monthsSlider.value + " months";
      }

      function calculateRvLoan() {
        const price =
          parseFloat(document.getElementById("rv-price").value) || 0;
        const fees = parseFloat(document.getElementById("rv-fees").value) || 0;
        const down =
          parseFloat(document.getElementById("rv-down-payment").value) || 0;
        const tradeValue =
          parseFloat(document.getElementById("rv-trade-value").value) || 0;
        const tradeLoan =
          parseFloat(document.getElementById("rv-trade-loan").value) || 0;
        const apr = parseFloat(document.getElementById("rv-apr").value) || 0;
        const termMonths =
          parseInt(document.getElementById("rv-term-months").value, 10) || 0;
        const extra =
          parseFloat(document.getElementById("rv-extra-payment").value) || 0;
        const frequency = document.getElementById("rv-frequency").value;

        const netTrade = Math.max(tradeValue - tradeLoan, 0);
        const amountFinanced = Math.max(price + fees - down - netTrade, 0);

        document.getElementById("rv-amount-financed").textContent =
          fmtCurrency(amountFinanced);

        const ltvBase = price + fees;
        const ltv = ltvBase > 0 ? (amountFinanced / ltvBase) * 100 : 0;
        document.getElementById("rv-ltv-label").textContent =
          ltvBase > 0
            ? "Loan-to-value (LTV): " + fmtPercent(ltv)
            : "Loan-to-value (LTV): —";

        const monthlyRate = apr > 0 ? apr / 100 / 12 : 0;
        let monthlyPayment = 0;

        if (amountFinanced > 0 && termMonths > 0) {
          if (monthlyRate === 0) {
            monthlyPayment = amountFinanced / termMonths;
          } else {
            const pow = Math.pow(1 + monthlyRate, termMonths);
            monthlyPayment = (amountFinanced * (monthlyRate * pow)) / (pow - 1);
          }
        }

        // Adjust for payment frequency for display (we still amortize monthly)
        let displayPayment = monthlyPayment;
        if (frequency === "biweekly") {
          displayPayment = (monthlyPayment * 12) / 26; // approx biweekly
        } else if (frequency === "weekly") {
          displayPayment = (monthlyPayment * 12) / 52;
        }

        document.getElementById("rv-monthly-payment").textContent =
          fmtCurrency(displayPayment);
        document.getElementById("summary-payment").textContent =
          fmtCurrency(monthlyPayment);

        // Build amortization with and without extra
        function buildSchedule(extraPrincipal) {
          let balance = amountFinanced;
          let totalInterest = 0;
          let totalPaid = 0;
          const schedule = [];
          const today = new Date();
          let monthIndex = 0;

          while (balance > 0 && monthIndex < termMonths + 600) {
            // safety cap
            const interest = monthlyRate * balance;
            let principal = monthlyPayment - interest + extraPrincipal;

            if (monthlyRate === 0) {
              principal = amountFinanced / termMonths + extraPrincipal;
            }

            if (principal <= 0) {
              // Avoid infinite loop if payment is too small
              principal = balance;
            }
            if (principal > balance + interest) {
              principal = balance;
            }

            const payment = principal + interest;
            balance = balance - principal;
            if (balance < 1e-8) balance = 0;

            totalInterest += interest;
            totalPaid += payment;

            const payDate = new Date(
              today.getFullYear(),
              today.getMonth() + monthIndex + 1,
              today.getDate()
            );

            schedule.push({
              period: monthIndex + 1,
              date: payDate,
              payment,
              principal,
              interest,
              balance,
            });

            if (balance <= 0) break;
            monthIndex++;
          }

          return { schedule, totalInterest, totalPaid };
        }

        const baseResult = buildSchedule(0);
        const extraResult = extra > 0 ? buildSchedule(extra) : null;

        const totalInterest = baseResult.totalInterest;
        const totalPaid = baseResult.totalPaid;

        document.getElementById("rv-total-interest").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("rv-total-cost").textContent =
          fmtCurrency(totalPaid);
        document.getElementById("summary-amount-financed").textContent =
          fmtCurrency(amountFinanced);
        document.getElementById("summary-apr").textContent =
          apr.toFixed(2).replace(/\.00$/, "") + "%";
        document.getElementById("summary-term").textContent =
          baseResult.schedule.length + " months";
        document.getElementById("summary-total-paid").textContent =
          fmtCurrency(totalPaid);
        document.getElementById("summary-total-interest").textContent =
          fmtCurrency(totalInterest);
        const interestPercent =
          amountFinanced > 0 ? (totalInterest / amountFinanced) * 100 : 0;
        document.getElementById("summary-interest-percent").textContent =
          fmtPercent(interestPercent);

        // Payoff time and date
        if (baseResult.schedule.length > 0) {
          const months = baseResult.schedule.length;
          const years = Math.floor(months / 12);
          const remMonths = months % 12;
          let payoffStr = "";
          if (years > 0)
            payoffStr += years + " year" + (years > 1 ? "s " : " ");
          if (remMonths > 0)
            payoffStr += remMonths + " month" + (remMonths > 1 ? "s" : "");
          if (!payoffStr) payoffStr = "0 months";
          document.getElementById("rv-payoff-time").textContent =
            payoffStr.trim();

          const lastDate =
            baseResult.schedule[baseResult.schedule.length - 1].date;
          document.getElementById("rv-payoff-date").textContent =
            "Payoff date: " +
            lastDate.toLocaleDateString("en-US", {
              year: "numeric",
              month: "short",
            });
        } else {
          document.getElementById("rv-payoff-time").textContent = "—";
          document.getElementById("rv-payoff-date").textContent =
            "Payoff date: —";
        }

        // Extra payment impact
        if (extraResult && extraResult.schedule.length > 0) {
          const baseMonths = baseResult.schedule.length;
          const extraMonths = extraResult.schedule.length;
          const savedMonths = baseMonths - extraMonths;
          const savedYears = Math.floor(savedMonths / 12);
          const savedRemMonths = savedMonths % 12;

          let payoffExtraStr = "";
          if (extraMonths > 0) {
            const yrs = Math.floor(extraMonths / 12);
            const mos = extraMonths % 12;
            if (yrs > 0)
              payoffExtraStr += yrs + " year" + (yrs > 1 ? "s " : " ");
            if (mos > 0)
              payoffExtraStr += mos + " month" + (mos > 1 ? "s" : "");
            if (!payoffExtraStr) payoffExtraStr = "0 months";
          } else {
            payoffExtraStr = "—";
          }
          document.getElementById("rv-payoff-time-extra").textContent =
            payoffExtraStr.trim();

          const interestSaved =
            baseResult.totalInterest - extraResult.totalInterest;
          const timeSavedStr =
            savedMonths > 0
              ? `Saves ${savedYears > 0 ? savedYears + " yr " : ""}${
                  savedRemMonths > 0 ? savedRemMonths + " mo " : ""
                }and `
              : "";
          document.getElementById("rv-interest-saved").textContent =
            interestSaved > 0
              ? timeSavedStr + "interest saved: " + fmtCurrency(interestSaved)
              : "No interest savings (extra payment too small).";
        } else {
          document.getElementById("rv-payoff-time-extra").textContent = "—";
          document.getElementById("rv-interest-saved").textContent =
            "Add an extra payment to see savings.";
        }

        // Cost per month of use (assume 10 years ownership)
        const ownershipYears = 10;
        const monthsOfUse = ownershipYears * 12;
        const costPerMonthUse = monthsOfUse > 0 ? totalPaid / monthsOfUse : 0;
        document.getElementById("rv-cost-per-month-use").textContent =
          fmtCurrency(costPerMonthUse);

        // Build yearly amortization table
        const yearlyBody = document.getElementById("rv-amort-yearly-body");
        yearlyBody.innerHTML = "";
        if (baseResult.schedule.length === 0) {
          yearlyBody.innerHTML =
            '<tr><td colspan="5" class="px-3 py-3 text-center text-gray-500">Enter valid loan details to see the schedule.</td></tr>';
        } else {
          const byYear = {};
          baseResult.schedule.forEach((row) => {
            const year = row.date.getFullYear();
            if (!byYear[year]) {
              byYear[year] = {
                payment: 0,
                principal: 0,
                interest: 0,
                endingBalance: row.balance,
              };
            }
            byYear[year].payment += row.payment;
            byYear[year].principal += row.principal;
            byYear[year].interest += row.interest;
            byYear[year].endingBalance = row.balance;
          });

          Object.keys(byYear)
            .sort()
            .forEach((year) => {
              const y = byYear[year];
              const tr = document.createElement("tr");
              tr.innerHTML = `
          <td class="px-3 py-2 text-left text-gray-700">${year}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            y.payment
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            y.principal
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            y.interest
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            y.endingBalance
          )}</td>
        `;
              yearlyBody.appendChild(tr);
            });
        }

        // Build monthly amortization table
        const monthlyBody = document.getElementById("rv-amort-monthly-body");
        monthlyBody.innerHTML = "";
        if (baseResult.schedule.length === 0) {
          monthlyBody.innerHTML =
            '<tr><td colspan="6" class="px-3 py-3 text-center text-gray-500">Enter valid loan details to see the schedule.</td></tr>';
        } else {
          baseResult.schedule.forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="px-3 py-2 text-left text-gray-700">${row.period}</td>
          <td class="px-3 py-2 text-left text-gray-700">${row.date.toLocaleDateString(
            "en-US",
            { year: "numeric", month: "short" }
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            row.payment
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            row.principal
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            row.interest
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${fmtCurrency(
            row.balance
          )}</td>
        `;
            monthlyBody.appendChild(tr);
          });
        }
      }

      // Tabs handling
      function setActiveTab(tabId) {
        const tabs = ["tab-summary", "tab-amort-yearly", "tab-amort-monthly"];
        const panels = [
          "panel-summary",
          "panel-amort-yearly",
          "panel-amort-monthly",
        ];
        tabs.forEach((id, idx) => {
          const btn = document.getElementById(id);
          const panel = document.getElementById(panels[idx]);
          if (id === tabId) {
            btn.classList.remove("tab-inactive");
            btn.classList.add("tab-active");
            panel.classList.remove("hidden");
          } else {
            btn.classList.remove("tab-active");
            btn.classList.add("tab-inactive");
            panel.classList.add("hidden");
          }
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        syncTermInputs("months");

        document
          .getElementById("rv-term-years")
          .addEventListener("input", function () {
            syncTermInputs("years");
          });
        document
          .getElementById("rv-term-months")
          .addEventListener("input", function () {
            syncTermInputs("months");
          });

        document
          .getElementById("rv-calc-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            calculateRvLoan();
          });

        document
          .getElementById("rv-reset-btn")
          .addEventListener("click", function (e) {
            e.preventDefault();
            document.getElementById("rv-price").value = 80000;
            document.getElementById("rv-fees").value = 4000;
            document.getElementById("rv-down-payment").value = 10000;
            document.getElementById("rv-trade-value").value = 0;
            document.getElementById("rv-trade-loan").value = 0;
            document.getElementById("rv-apr").value = 7.49;
            document.getElementById("rv-term-years").value = 15;
            document.getElementById("rv-term-months").value = 180;
            document.getElementById("rv-extra-payment").value = 0;
            document.getElementById("rv-frequency").value = "monthly";
            syncTermInputs("months");
            calculateRvLoan();
          });

        document
          .getElementById("tab-summary")
          .addEventListener("click", function () {
            setActiveTab("tab-summary");
          });
        document
          .getElementById("tab-amort-yearly")
          .addEventListener("click", function () {
            setActiveTab("tab-amort-yearly");
          });
        document
          .getElementById("tab-amort-monthly")
          .addEventListener("click", function () {
            setActiveTab("tab-amort-monthly");
          });

        // Initial calculation
        calculateRvLoan();
      });
    </script>

