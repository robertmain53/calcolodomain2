    <script>
      // Utility functions
      function fmtCurrency(value) {
        if (!isFinite(value)) return "–";
        const abs = Math.abs(value);
        if (abs >= 1e9) return (value / 1e9).toFixed(2) + "B";
        if (abs >= 1e6) return (value / 1e6).toFixed(2) + "M";
        return value.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }

      function fmtPercent(value) {
        if (!isFinite(value)) return "–";
        return value.toFixed(2) + "%";
      }

      function monthsToYearsMonths(m) {
        if (!isFinite(m) || m <= 0) return "–";
        const months = Math.round(m);
        const years = Math.floor(months / 12);
        const rem = months % 12;
        const parts = [];
        if (years > 0) parts.push(years + " yr" + (years > 1 ? "s" : ""));
        if (rem > 0) parts.push(rem + " mo");
        return parts.join(" ");
      }

      function computeMonthlyPayment(P, annualRate, nMonths) {
        if (nMonths <= 0 || P <= 0) return 0;
        const r = annualRate / 100 / 12;
        if (r === 0) return P / nMonths;
        const pow = Math.pow(1 + r, nMonths);
        return (P * r * pow) / (pow - 1);
      }

      function buildAmortization(
        P,
        annualRate,
        nMonths,
        monthlyFee,
        extraPrincipal
      ) {
        const schedule = [];
        const r = annualRate / 100 / 12;
        const basePayment = computeMonthlyPayment(P, annualRate, nMonths);
        let balance = P;
        let month = 0;
        let totalInterest = 0;
        let totalFees = 0;

        while (balance > 0 && month < nMonths + 600) {
          // safety cap
          month++;
          const interest = r * balance;
          let principal = basePayment - interest;
          let payment = basePayment;

          if (extraPrincipal > 0) {
            principal += extraPrincipal;
            payment += extraPrincipal;
          }

          if (principal > balance) {
            principal = balance;
            payment = principal + interest;
          }

          balance -= principal;
          const fee = monthlyFee || 0;
          totalInterest += interest;
          totalFees += fee;

          schedule.push({
            month,
            payment: payment + fee,
            principal,
            interest,
            fee,
            balance: Math.max(balance, 0),
          });

          if (balance <= 0.01) {
            balance = 0;
            break;
          }
        }

        return {
          schedule,
          totalInterest,
          totalFees,
          payoffMonths: schedule.length,
          basePayment,
        };
      }

      // IRR / APR calculation using Newton-Raphson
      function computeEffectiveAPR(
        P,
        upfrontFee,
        monthlyPayment,
        monthlyFee,
        nMonths
      ) {
        const netDisbursement = P - upfrontFee;
        if (netDisbursement <= 0 || nMonths <= 0) return NaN;

        const cashFlows = [];
        cashFlows.push(netDisbursement);
        const outflow = -(monthlyPayment + (monthlyFee || 0));
        for (let t = 1; t <= nMonths; t++) {
          cashFlows.push(outflow);
        }

        let rate = 0.005; // initial guess (0.5% per month)
        for (let iter = 0; iter < 100; iter++) {
          let npv = 0;
          let dnpv = 0;
          for (let t = 0; t < cashFlows.length; t++) {
            const cf = cashFlows[t];
            const denom = Math.pow(1 + rate, t);
            npv += cf / denom;
            if (t > 0) {
              dnpv -= (t * cf) / (denom * (1 + rate));
            }
          }
          if (Math.abs(npv) < 1e-8) break;
          const step = npv / dnpv;
          rate -= step;
          if (!isFinite(rate) || rate <= -0.999) {
            return NaN;
          }
        }
        const apr = (Math.pow(1 + rate, 12) - 1) * 100;
        return apr;
      }

      function getLoanCount() {
        const select = document.getElementById("loan-count");
        const n = parseInt(select.value, 10);
        return isNaN(n) ? 4 : Math.min(Math.max(n, 1), 4);
      }

      function updateVisibleLoans() {
        const n = getLoanCount();
        const cols = [1, 2, 3, 4];
        cols.forEach((i) => {
          const display = i <= n ? "" : "none";
          // Inputs table
          document
            .querySelectorAll(
              "#loan-inputs-heading ~ div table thead tr th:nth-child(" +
                (i + 1) +
                "), #loan-inputs-heading ~ div table tbody tr td:nth-child(" +
                (i + 1) +
                ")"
            )
            .forEach((el) => {
              el.style.display = display;
            });
          // Summary table
          document
            .querySelectorAll(
              "#summary-container table thead tr th:nth-child(" +
                (i + 1) +
                "), #summary-container table tbody tr td:nth-child(" +
                (i + 1) +
                ")"
            )
            .forEach((el) => {
              el.style.display = display;
            });
          // Tabs
          const tab = document.querySelector(
            '.loan-tab-btn[data-loan-tab="' + i + '"]'
          );
          if (tab) tab.style.display = display;
        });
      }

      function syncLabelsToSummary() {
        for (let i = 1; i <= 4; i++) {
          const labelInput = document.getElementById("label-" + i);
          const label = labelInput
            ? labelInput.value || "Loan " + i
            : "Loan " + i;
          document.querySelectorAll(".summary-label-" + i).forEach((el) => {
            el.textContent = label;
          });
          const tab = document.querySelector(
            '.loan-tab-btn[data-loan-tab="' + i + '"]'
          );
          if (tab) tab.textContent = label;
        }
      }

      function showError(msg) {
        const el = document.getElementById("error-message");
        el.textContent = msg;
        el.classList.remove("hidden");
      }

      function clearError() {
        const el = document.getElementById("error-message");
        el.textContent = "";
        el.classList.add("hidden");
      }

      function calculateLoans() {
        clearError();
        syncLabelsToSummary();
        const nLoans = getLoanCount();
        const results = [];

        for (let i = 1; i <= nLoans; i++) {
          const amount = parseFloat(
            document.getElementById("amount-" + i).value
          );
          const rate = parseFloat(document.getElementById("rate-" + i).value);
          const termVal = parseFloat(
            document.getElementById("term-" + i).value
          );
          const termUnit = document.getElementById("term-unit-" + i).value;
          const upfront =
            parseFloat(document.getElementById("upfront-" + i).value) || 0;
          const ongoing =
            parseFloat(document.getElementById("ongoing-" + i).value) || 0;
          const extra =
            parseFloat(document.getElementById("extra-" + i).value) || 0;

          if (!isFinite(amount) || amount <= 0) {
            showError(
              "Please enter a positive loan amount for each active loan."
            );
            return;
          }
          if (!isFinite(rate) || rate < 0) {
            showError(
              "Please enter a non-negative interest rate for each active loan."
            );
            return;
          }
          if (!isFinite(termVal) || termVal <= 0) {
            showError("Please enter a positive term for each active loan.");
            return;
          }

          const nMonths =
            termUnit === "years"
              ? Math.round(termVal * 12)
              : Math.round(termVal);
          const amortNoExtra = buildAmortization(
            amount,
            rate,
            nMonths,
            ongoing,
            0
          );
          const amortWithExtra = buildAmortization(
            amount,
            rate,
            nMonths,
            ongoing,
            extra
          );

          const totalInterestNoExtra = amortNoExtra.totalInterest;
          const totalInterestWithExtra = amortWithExtra.totalInterest;
          const interestSaved = Math.max(
            0,
            totalInterestNoExtra - totalInterestWithExtra
          );

          const totalOngoingFeesNoExtra = ongoing * amortNoExtra.payoffMonths;
          const totalOngoingFeesWithExtra =
            ongoing * amortWithExtra.payoffMonths;

          const totalFeesNoExtra = upfront + totalOngoingFeesNoExtra;
          const totalFeesWithExtra = upfront + totalOngoingFeesWithExtra;

          const totalCostNoExtra = totalInterestNoExtra + totalFeesNoExtra;
          const totalCostWithExtra =
            totalInterestWithExtra + totalFeesWithExtra;

          const aprEff = computeEffectiveAPR(
            amount,
            upfront,
            amortNoExtra.basePayment,
            ongoing,
            amortNoExtra.payoffMonths
          );

          results.push({
            index: i,
            amount,
            rate,
            nMonths,
            upfront,
            ongoing,
            extra,
            amortNoExtra,
            amortWithExtra,
            totalInterestNoExtra,
            totalInterestWithExtra,
            interestSaved,
            totalFeesNoExtra,
            totalFeesWithExtra,
            totalCostNoExtra,
            totalCostWithExtra,
            aprEff,
          });
        }

        // Update summary table
        results.forEach((r) => {
          const i = r.index;
          document.getElementById("monthly-" + i).textContent = fmtCurrency(
            r.amortNoExtra.basePayment
          );
          document.getElementById("monthly-total-" + i).textContent =
            fmtCurrency(r.amortWithExtra.basePayment + r.ongoing + r.extra);
          document.getElementById("interest-1".replace("1", i)).textContent =
            fmtCurrency(r.totalInterestNoExtra);
          document.getElementById("upfront-out-" + i).textContent = fmtCurrency(
            r.upfront
          );
          document.getElementById("ongoing-out-" + i).textContent = fmtCurrency(
            r.ongoing * r.amortNoExtra.payoffMonths
          );
          document.getElementById("total-cost-" + i).textContent = fmtCurrency(
            r.totalCostNoExtra
          );
          document.getElementById("apr-" + i).textContent = isNaN(r.aprEff)
            ? "–"
            : fmtPercent(r.aprEff);
          document.getElementById("payoff-" + i).textContent =
            monthsToYearsMonths(r.amortWithExtra.payoffMonths);
          document.getElementById("interest-saved-" + i).textContent =
            r.interestSaved > 0 ? fmtCurrency(r.interestSaved) : "–";
        });

        // Clear unused columns
        for (let i = results.length + 1; i <= 4; i++) {
          [
            "monthly-",
            "monthly-total-",
            "interest-",
            "upfront-out-",
            "ongoing-out-",
            "total-cost-",
            "apr-",
            "payoff-",
            "interest-saved-",
          ].forEach((prefix) => {
            const el = document.getElementById(prefix + i);
            if (el) el.textContent = "–";
          });
        }

        // Highlight best loan by total cost
        let best = null;
        results.forEach((r) => {
          if (!best || r.totalCostNoExtra < best.totalCostNoExtra) best = r;
        });
        const bestText = document.getElementById("best-loan-text");
        if (best) {
          const labelInput = document.getElementById("label-" + best.index);
          const label =
            labelInput && labelInput.value
              ? labelInput.value
              : "Loan " + best.index;
          bestText.textContent =
            label +
            " has the lowest estimated total cost (" +
            fmtCurrency(best.totalCostNoExtra) +
            ").";
          bestText.classList.remove("hidden");
        } else {
          bestText.classList.add("hidden");
        }

        // Store amortization schedules for tab display
        window._loanComparisonData = results;
        updateAmortizationTable(getActiveLoanTab());
      }

      function getActiveLoanTab() {
        const active = document.querySelector(
          ".loan-tab-btn.bg-blue-50, .loan-tab-btn.bg-blue-100"
        );
        if (!active) return 1;
        const idx = parseInt(active.getAttribute("data-loan-tab"), 10);
        return isNaN(idx) ? 1 : idx;
      }

      function setActiveLoanTab(idx) {
        document.querySelectorAll(".loan-tab-btn").forEach((btn) => {
          const tab = parseInt(btn.getAttribute("data-loan-tab"), 10);
          if (tab === idx) {
            btn.classList.remove(
              "border-gray-300",
              "text-gray-700",
              "bg-white"
            );
            btn.classList.add(
              "border-blue-600",
              "text-blue-600",
              "bg-blue-50",
              "font-medium"
            );
          } else {
            btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
            btn.classList.remove(
              "border-blue-600",
              "text-blue-600",
              "bg-blue-50",
              "font-medium"
            );
          }
        });
      }

      function updateAmortizationTable(idx) {
        const tbody = document.getElementById("amortization-body");
        tbody.innerHTML = "";
        const data = window._loanComparisonData || [];
        const loan = data.find((r) => r.index === idx);
        if (!loan) {
          const tr = document.createElement("tr");
          tr.innerHTML =
            '<td colspan="6" class="px-3 py-4 text-center text-gray-500 text-sm">Run a calculation to see the amortization schedule.</td>';
          tbody.appendChild(tr);
          return;
        }

        loan.amortWithExtra.schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 text-left">${row.month}</td>
        <td class="px-3 py-1 text-right">${fmtCurrency(row.payment)}</td>
        <td class="px-3 py-1 text-right">${fmtCurrency(row.principal)}</td>
        <td class="px-3 py-1 text-right">${fmtCurrency(row.interest)}</td>
        <td class="px-3 py-1 text-right">${fmtCurrency(row.fee)}</td>
        <td class="px-3 py-1 text-right">${fmtCurrency(row.balance)}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateVisibleLoans();
        syncLabelsToSummary();

        document
          .getElementById("loan-count")
          .addEventListener("change", function () {
            updateVisibleLoans();
          });

        ["label-1", "label-2", "label-3", "label-4"].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("input", syncLabelsToSummary);
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateLoans);

        document
          .getElementById("reset-loans")
          .addEventListener("click", function () {
            const defaults = {
              amount: [250000, 250000, 250000, 250000],
              rate: [5.25, 4.9, 5.75, 6.25],
              term: [30, 25, 20, 15],
              termUnit: ["years", "years", "years", "years"],
              upfront: [2000, 1500, 1000, 500],
              ongoing: [0, 0, 0, 0],
              extra: [0, 0, 0, 0],
              label: ["Loan 1", "Loan 2", "Loan 3", "Loan 4"],
            };
            for (let i = 1; i <= 4; i++) {
              document.getElementById("amount-" + i).value =
                defaults.amount[i - 1];
              document.getElementById("rate-" + i).value = defaults.rate[i - 1];
              document.getElementById("term-" + i).value = defaults.term[i - 1];
              document.getElementById("term-unit-" + i).value =
                defaults.termUnit[i - 1];
              document.getElementById("upfront-" + i).value =
                defaults.upfront[i - 1];
              document.getElementById("ongoing-" + i).value =
                defaults.ongoing[i - 1];
              document.getElementById("extra-" + i).value =
                defaults.extra[i - 1];
              document.getElementById("label-" + i).value =
                defaults.label[i - 1];
            }
            syncLabelsToSummary();
            clearError();
            document.getElementById("best-loan-text").classList.add("hidden");
            window._loanComparisonData = null;
            updateAmortizationTable(getActiveLoanTab());
            // Reset summary cells
            for (let i = 1; i <= 4; i++) {
              [
                "monthly-",
                "monthly-total-",
                "interest-",
                "upfront-out-",
                "ongoing-out-",
                "total-cost-",
                "apr-",
                "payoff-",
                "interest-saved-",
              ].forEach((prefix) => {
                const el = document.getElementById(prefix + i);
                if (el) el.textContent = "–";
              });
            }
          });

        document.querySelectorAll(".loan-tab-btn").forEach((btn) => {
          btn.addEventListener("click", function () {
            const idx = parseInt(this.getAttribute("data-loan-tab"), 10);
            setActiveLoanTab(idx);
            updateAmortizationTable(idx);
          });
        });

        // Initialize first tab
        setActiveLoanTab(1);

        // FAQ toggle (simple, in addition to global script_faq if any)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", function () {
              const answer = this.nextElementSibling;
              const symbol = this.querySelector("span:last-child");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((s) => (s.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                symbol.textContent = "−";
              }
            });
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
