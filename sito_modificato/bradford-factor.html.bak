    <script>
      // Bradford Factor calculator logic
      (function () {
        const instancesInput = document.getElementById("instances");
        const daysInput = document.getElementById("days-absent");
        const reviewDaysInput = document.getElementById("review-days");
        const scoreEl = document.getElementById("bf-score");
        const bandEl = document.getElementById("bf-band");
        const bandBadgeEl = document.getElementById("bf-band-badge");
        const interpEl = document.getElementById("bf-interpretation");

        const thMonitor = document.getElementById("threshold-monitor");
        const thReview = document.getElementById("threshold-review");
        const thSerious = document.getElementById("threshold-serious");

        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const applyThresholdsBtn = document.getElementById("apply-thresholds");

        const scenarioButtons = document.querySelectorAll(".scenario-btn");

        function clampNumber(value, min, max) {
          if (isNaN(value)) return min;
          if (value < min) return min;
          if (typeof max === "number" && value > max) return max;
          return value;
        }

        function calculateScore() {
          const S = clampNumber(parseFloat(instancesInput.value), 0);
          const D = clampNumber(parseFloat(daysInput.value), 0);
          const B = Math.round(S * S * D);

          scoreEl.textContent = isNaN(B) ? "0" : B.toString();
          updateBandAndInterpretation(B);
        }

        function updateBandAndInterpretation(B) {
          const m = clampNumber(parseFloat(thMonitor.value), 0);
          const r = clampNumber(parseFloat(thReview.value), 0);
          const s = clampNumber(parseFloat(thSerious.value), 0);

          let band = "No concern";
          let badgeText = "Low";
          let badgeClass =
            "bg-green-100 text-green-700 border border-green-200";
          let interp =
            "Score is currently in the “no concern” range. Occasional or no absence.";

          if (B >= s && s > 0) {
            band = "Serious concern";
            badgeText = "High";
            badgeClass = "bg-red-100 text-red-700 border border-red-200";
            interp =
              "Score is above the serious concern threshold. Policy may suggest a high-level review or formal action, but always consider context, health, and legal obligations.";
          } else if (B >= r && r > 0) {
            band = "Formal review";
            badgeText = "Elevated";
            badgeClass =
              "bg-orange-100 text-orange-700 border border-orange-200";
            interp =
              "Score is above the formal review threshold. Typically a structured absence review meeting is recommended, with attention to underlying causes and reasonable adjustments.";
          } else if (B >= m && m > 0) {
            band = "Monitor";
            badgeText = "Medium";
            badgeClass =
              "bg-yellow-100 text-yellow-700 border border-yellow-200";
            interp =
              "Score is above the monitoring threshold. Consider an informal wellbeing or attendance conversation and keep the pattern under review.";
          }

          bandEl.textContent = band;
          bandBadgeEl.textContent = badgeText;
          bandBadgeEl.className = "badge " + badgeClass;
          interpEl.textContent = interp;
        }

        function resetForm() {
          document.getElementById("employee-name").value = "";
          reviewDaysInput.value = 260;
          instancesInput.value = 0;
          daysInput.value = 0;
          thMonitor.value = 50;
          thReview.value = 200;
          thSerious.value = 400;
          scoreEl.textContent = "0";
          bandEl.textContent = "No concern";
          bandBadgeEl.textContent = "Low";
          bandBadgeEl.className =
            "badge bg-green-100 text-green-700 border border-green-200";
          interpEl.textContent =
            "Score is currently in the “no concern” range. Occasional or no absence.";
        }

        function applyScenario(type) {
          switch (type) {
            case "few-long":
              instancesInput.value = 2;
              daysInput.value = 20;
              break;
            case "many-short":
              instancesInput.value = 10;
              daysInput.value = 20;
              break;
            case "perfect":
              instancesInput.value = 0;
              daysInput.value = 0;
              break;
          }
          calculateScore();
        }

        calcBtn.addEventListener("click", function (e) {
          e.preventDefault();
          calculateScore();
        });

        resetBtn.addEventListener("click", function (e) {
          e.preventDefault();
          resetForm();
        });

        applyThresholdsBtn.addEventListener("click", function (e) {
          e.preventDefault();
          const m = clampNumber(parseFloat(thMonitor.value), 0);
          const r = clampNumber(parseFloat(thReview.value), 0);
          const s = clampNumber(parseFloat(thSerious.value), 0);

          // Ensure logical ordering: m <= r <= s
          if (r < m) thReview.value = m;
          if (s < r) thSerious.value = thReview.value;

          const currentScore = parseInt(scoreEl.textContent, 10) || 0;
          updateBandAndInterpretation(currentScore);
        });

        scenarioButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const scenario = btn.getAttribute("data-scenario");
            applyScenario(scenario);
          });
        });

        // Optional: recalc on input blur for quick feedback
        [instancesInput, daysInput].forEach((input) => {
          input.addEventListener("blur", calculateScore);
        });

        // Initial state
        resetForm();
      })();
    </script>

