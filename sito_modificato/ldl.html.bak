    <script>
      // LDL calculator logic
      (function () {
        const unitSelect = document.getElementById("unit-select");
        const totalCholInput = document.getElementById("total-chol");
        const hdlInput = document.getElementById("hdl");
        const trigInput = document.getElementById("trig");
        const totalCholUnit = document.getElementById("total-chol-unit");
        const hdlUnit = document.getElementById("hdl-unit");
        const trigUnit = document.getElementById("trig-unit");
        const trigWarning = document.getElementById("trig-warning");
        const calcBtn = document.getElementById("calculate-btn");
        const resultsSection = document.getElementById("results-section");
        const ldlResultMain = document.getElementById("ldl-result-main");
        const ldlResultAlt = document.getElementById("ldl-result-alt");
        const ldlCategoryBadge = document.getElementById("ldl-category-badge");
        const ldlInterpretation = document.getElementById("ldl-interpretation");
        const inputSummary = document.getElementById("input-summary");
        const errorMessage = document
          .getElementById("error-message")
          .querySelector("p");
        const errorContainer = document.getElementById("error-message");

        function updateUnitLabels() {
          const unit = unitSelect.value;
          if (unit === "mgdl") {
            totalCholUnit.textContent = "mg/dL";
            hdlUnit.textContent = "mg/dL";
            trigUnit.textContent = "mg/dL";
          } else {
            totalCholUnit.textContent = "mmol/L";
            hdlUnit.textContent = "mmol/L";
            trigUnit.textContent = "mmol/L";
          }
          // Clear previous results when switching units
          resultsSection.classList.add("hidden");
          errorContainer.classList.add("hidden");
        }

        function classifyLDL(ldlMg) {
          if (isNaN(ldlMg))
            return {
              category: "Unknown",
              color: "bg-gray-100 text-gray-700 border-gray-300",
              message: "",
            };

          if (ldlMg < 100) {
            return {
              category: "Optimal",
              color: "bg-green-100 text-green-800 border-green-300",
              message:
                "Your LDL-C is in the optimal range for most adults. Your doctor will still consider your overall cardiovascular risk.",
            };
          } else if (ldlMg < 130) {
            return {
              category: "Near optimal / above optimal",
              color: "bg-lime-100 text-lime-800 border-lime-300",
              message:
                "LDL-C is slightly above optimal. Lifestyle measures may be recommended depending on your overall risk profile.",
            };
          } else if (ldlMg < 160) {
            return {
              category: "Borderline high",
              color: "bg-amber-100 text-amber-800 border-amber-300",
              message:
                "LDL-C is borderline high. Your clinician may suggest lifestyle changes and, in some cases, medication.",
            };
          } else if (ldlMg < 190) {
            return {
              category: "High",
              color: "bg-orange-100 text-orange-800 border-orange-300",
              message:
                "LDL-C is high. This is associated with increased cardiovascular risk; medical evaluation is important.",
            };
          } else {
            return {
              category: "Very high",
              color: "bg-red-100 text-red-800 border-red-300",
              message:
                "LDL-C is very high. This usually requires prompt medical attention and aggressive risk management.",
            };
          }
        }

        function convertMgToMmol(mg, type) {
          // type: 'chol' or 'trig'
          if (type === "chol") {
            return mg / 38.67; // approximate factor for cholesterol
          } else {
            return mg / 88.57; // approximate factor for triglycerides
          }
        }

        function convertMmolToMg(mmol, type) {
          if (type === "chol") {
            return mmol * 38.67;
          } else {
            return mmol * 88.57;
          }
        }

        function validateInputs(tc, hdl, tg) {
          if (isNaN(tc) || isNaN(hdl) || isNaN(tg)) {
            return "Please enter all three values: total cholesterol, HDL, and triglycerides.";
          }
          if (tc <= 0 || hdl <= 0 || tg < 0) {
            return "Values must be positive. Triglycerides cannot be negative.";
          }
          if (hdl > tc) {
            return "HDL cholesterol cannot be higher than total cholesterol. Please check your entries.";
          }
          return "";
        }

        function updateTrigWarning() {
          const unit = unitSelect.value;
          const tg = parseFloat(trigInput.value);
          if (isNaN(tg) || tg <= 0) {
            trigWarning.classList.add("hidden");
            return;
          }
          if (
            (unit === "mgdl" && tg >= 400) ||
            (unit === "mmoll" && tg >= 4.5)
          ) {
            trigWarning.classList.remove("hidden");
          } else {
            trigWarning.classList.add("hidden");
          }
        }

        unitSelect.addEventListener("change", updateUnitLabels);
        trigInput.addEventListener("input", updateTrigWarning);

        calcBtn.addEventListener("click", function () {
          const unit = unitSelect.value;
          const tc = parseFloat(totalCholInput.value);
          const hdl = parseFloat(hdlInput.value);
          const tg = parseFloat(trigInput.value);

          const validationError = validateInputs(tc, hdl, tg);
          if (validationError) {
            errorMessage.textContent = validationError;
            errorContainer.classList.remove("hidden");
            resultsSection.classList.add("hidden");
            return;
          } else {
            errorContainer.classList.add("hidden");
          }

          // Check triglyceride threshold
          if (
            (unit === "mgdl" && tg >= 400) ||
            (unit === "mmoll" && tg >= 4.5)
          ) {
            errorMessage.textContent =
              "Triglycerides are very high. The Friedewald equation is not reliable in this range. Please ask your clinician about a direct LDL measurement.";
            errorContainer.classList.remove("hidden");
            resultsSection.classList.add("hidden");
            return;
          }

          let ldl;
          if (unit === "mgdl") {
            ldl = tc - hdl - tg / 5;
          } else {
            ldl = tc - hdl - tg / 2.2;
          }

          if (!isFinite(ldl)) {
            errorMessage.textContent =
              "Unable to compute LDL with the given values. Please check your inputs.";
            errorContainer.classList.remove("hidden");
            resultsSection.classList.add("hidden");
            return;
          }

          // Compute both unit versions for display
          let ldlMg, ldlMmol;
          if (unit === "mgdl") {
            ldlMg = ldl;
            ldlMmol = convertMgToMmol(ldlMg, "chol");
          } else {
            ldlMmol = ldl;
            ldlMg = convertMmolToMg(ldlMmol, "chol");
          }

          const classification = classifyLDL(ldlMg);

          ldlResultMain.textContent =
            unit === "mgdl"
              ? ldlMg.toFixed(1) + " mg/dL"
              : ldlMmol.toFixed(2) + " mmol/L";

          ldlResultAlt.textContent =
            unit === "mgdl"
              ? "(" + ldlMmol.toFixed(2) + " mmol/L)"
              : "(" + ldlMg.toFixed(1) + " mg/dL)";

          ldlCategoryBadge.textContent = classification.category;
          ldlCategoryBadge.className = "badge border " + classification.color;
          ldlInterpretation.textContent = classification.message;

          // Input summary
          const unitLabel = unit === "mgdl" ? "mg/dL" : "mmol/L";
          inputSummary.innerHTML = `
        <li>Total cholesterol: <strong>${tc.toFixed(
          1
        )} ${unitLabel}</strong></li>
        <li>HDL cholesterol: <strong>${hdl.toFixed(
          1
        )} ${unitLabel}</strong></li>
        <li>Triglycerides: <strong>${tg.toFixed(1)} ${unitLabel}</strong></li>
      `;

          resultsSection.classList.remove("hidden");
        });

        // Initialize
        updateUnitLabels();
      })();
    </script>

