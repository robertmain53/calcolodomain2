    <script>
      // Utility: conversions
      const FT2_PER_M2 = 10.76391041671;

      function imperialToFeet(feet, inches) {
        const f = parseFloat(feet) || 0;
        const i = parseFloat(inches) || 0;
        return f + i / 12;
      }

      function metricToMeters(meters, centimeters) {
        const m = parseFloat(meters) || 0;
        const c = parseFloat(centimeters) || 0;
        return m + c / 100;
      }

      function ft2ToM2(ft2) {
        return ft2 / FT2_PER_M2;
      }

      function m2ToFt2(m2) {
        return m2 * FT2_PER_M2;
      }

      // DOM elements
      const unitSystemSelect = document.getElementById("unit-system");
      const wasteInput = document.getElementById("waste-percent");
      const plankAreaInput = document.getElementById("plank-area");
      const plankAreaUnitSelect = document.getElementById("plank-area-unit");
      const roomsTbody = document.getElementById("rooms-tbody");
      const addRoomBtn = document.getElementById("add-room-btn");
      const resetBtn = document.getElementById("reset-btn");
      const printBtn = document.getElementById("print-btn");
      const copySummaryBtn = document.getElementById("copy-summary-btn");
      const copyFeedback = document.getElementById("copy-feedback");

      const totalAreaFt2El = document.getElementById("total-area-ft2");
      const totalAreaM2El = document.getElementById("total-area-m2");
      const neededAreaFt2El = document.getElementById("needed-area-ft2");
      const neededAreaM2El = document.getElementById("needed-area-m2");
      const boxesWrapper = document.getElementById("boxes-wrapper");
      const boxesCountEl = document.getElementById("boxes-count");

      const lengthHeaderUnit = document.getElementById("length-header-unit");
      const widthHeaderUnit = document.getElementById("width-header-unit");
      const areaHeaderUnit = document.getElementById("area-header-unit");
      const areaHeaderUnitMetric = document.getElementById(
        "area-header-unit-metric"
      );

      let roomIdCounter = 0;

      function createRoomRow(name = "") {
        roomIdCounter++;
        const id = roomIdCounter;

        const tr = document.createElement("tr");
        tr.className = "room-row border-t border-gray-100";
        tr.dataset.roomId = id;

        tr.innerHTML = `
      <td class="px-3 py-2 align-top">
        <input type="text" class="room-name w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="Room ${id}" value="${name}">
      </td>
      <td class="px-3 py-2 align-top">
        <div class="flex gap-1 unit-imperial">
          <input type="number" min="0" step="0.01" class="len-main w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="ft">
          <input type="number" min="0" step="0.01" class="len-sub w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="in">
        </div>
        <div class="flex gap-1 unit-metric hidden">
          <input type="number" min="0" step="0.01" class="len-main w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="m">
          <input type="number" min="0" step="0.01" class="len-sub w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="cm">
        </div>
      </td>
      <td class="px-3 py-2 align-top">
        <div class="flex gap-1 unit-imperial">
          <input type="number" min="0" step="0.01" class="wid-main w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="ft">
          <input type="number" min="0" step="0.01" class="wid-sub w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="in">
        </div>
        <div class="flex gap-1 unit-metric hidden">
          <input type="number" min="0" step="0.01" class="wid-main w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="m">
          <input type="number" min="0" step="0.01" class="wid-sub w-1/2 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" placeholder="cm">
        </div>
      </td>
      <td class="px-3 py-2 text-right align-top">
        <span class="area-ft2 text-gray-800">0.00</span>
      </td>
      <td class="px-3 py-2 text-right align-top">
        <span class="area-m2 text-gray-800">0.00</span>
      </td>
      <td class="px-3 py-2 text-center align-top">
        <button type="button" class="remove-room text-red-600 hover:text-red-800 text-xs">Remove</button>
      </td>
    `;

        roomsTbody.appendChild(tr);
        attachRowListeners(tr);
        updateUnitVisibility();
        recalcAll();
      }

      function attachRowListeners(tr) {
        tr.addEventListener("input", (e) => {
          if (e.target.matches("input")) {
            recalcAll();
          }
        });
        const removeBtn = tr.querySelector(".remove-room");
        removeBtn.addEventListener("click", () => {
          tr.remove();
          recalcAll();
        });
      }

      function getRoomAreaFt2(tr) {
        const unitSystem = unitSystemSelect.value;
        const lenGroups = tr.querySelectorAll(".len-main");
        const lenSubs = tr.querySelectorAll(".len-sub");
        const widGroups = tr.querySelectorAll(".wid-main");
        const widSubs = tr.querySelectorAll(".wid-sub");

        let length = 0;
        let width = 0;

        if (unitSystem === "imperial") {
          const lenFt = lenGroups[0].value;
          const lenIn = lenSubs[0].value;
          const widFt = widGroups[0].value;
          const widIn = widSubs[0].value;
          length = imperialToFeet(lenFt, lenIn);
          width = imperialToFeet(widFt, widIn);
          return length * width;
        } else {
          const lenM = lenGroups[1].value;
          const lenCm = lenSubs[1].value;
          const widM = widGroups[1].value;
          const widCm = widSubs[1].value;
          const lenMeters = metricToMeters(lenM, lenCm);
          const widMeters = metricToMeters(widM, widCm);
          const areaM2 = lenMeters * widMeters;
          return m2ToFt2(areaM2);
        }
      }

      function recalcAll() {
        let totalFt2 = 0;

        roomsTbody.querySelectorAll(".room-row").forEach((tr) => {
          const areaFt2 = getRoomAreaFt2(tr);
          const areaM2 = ft2ToM2(areaFt2);

          totalFt2 += areaFt2;

          const areaFt2El = tr.querySelector(".area-ft2");
          const areaM2El = tr.querySelector(".area-m2");
          areaFt2El.textContent = areaFt2 > 0 ? areaFt2.toFixed(2) : "0.00";
          areaM2El.textContent = areaM2 > 0 ? areaM2.toFixed(2) : "0.00";
        });

        const totalM2 = ft2ToM2(totalFt2);
        totalAreaFt2El.textContent = totalFt2.toFixed(2);
        totalAreaM2El.textContent = totalM2.toFixed(2);

        const wastePercent = parseFloat(wasteInput.value) || 0;
        const factor = 1 + wastePercent / 100;
        const neededFt2 = totalFt2 * factor;
        const neededM2 = totalM2 * factor;

        neededAreaFt2El.textContent = neededFt2.toFixed(2);
        neededAreaM2El.textContent = neededM2.toFixed(2);

        // Boxes
        const coverage = parseFloat(plankAreaInput.value);
        if (coverage && coverage > 0) {
          let coverageFt2;
          if (plankAreaUnitSelect.value === "ft2") {
            coverageFt2 = coverage;
          } else {
            coverageFt2 = m2ToFt2(coverage);
          }
          const boxes =
            coverageFt2 > 0 ? Math.ceil(neededFt2 / coverageFt2) : 0;
          if (boxes > 0) {
            boxesWrapper.classList.remove("hidden");
            boxesCountEl.textContent = boxes.toString();
          } else {
            boxesWrapper.classList.add("hidden");
            boxesCountEl.textContent = "0";
          }
        } else {
          boxesWrapper.classList.add("hidden");
          boxesCountEl.textContent = "0";
        }
      }

      function updateUnitVisibility() {
        const unitSystem = unitSystemSelect.value;
        const imperialVisible = unitSystem === "imperial";

        document.querySelectorAll(".unit-imperial").forEach((el) => {
          el.classList.toggle("hidden", !imperialVisible);
        });
        document.querySelectorAll(".unit-metric").forEach((el) => {
          el.classList.toggle("hidden", imperialVisible);
        });

        if (imperialVisible) {
          lengthHeaderUnit.textContent = "(ft + in)";
          widthHeaderUnit.textContent = "(ft + in)";
          areaHeaderUnit.textContent = "(ft²)";
          areaHeaderUnitMetric.textContent = "(m²)";
        } else {
          lengthHeaderUnit.textContent = "(m + cm)";
          widthHeaderUnit.textContent = "(m + cm)";
          areaHeaderUnit.textContent = "(ft²)";
          areaHeaderUnitMetric.textContent = "(m²)";
        }
      }

      function resetCalculator() {
        roomsTbody.innerHTML = "";
        roomIdCounter = 0;
        createRoomRow("Living room");
        createRoomRow("Bedroom 1");
        wasteInput.value = 10;
        plankAreaInput.value = "";
        boxesWrapper.classList.add("hidden");
        boxesCountEl.textContent = "0";
        recalcAll();
      }

      function buildTextSummary() {
        const lines = [];
        lines.push("Floor Plan Summary");
        lines.push("==================");
        lines.push("");

        const unitSystem =
          unitSystemSelect.value === "imperial"
            ? "Imperial (ft/in)"
            : "Metric (m/cm)";
        lines.push(`Unit system: ${unitSystem}`);
        lines.push(
          `Waste margin: ${(parseFloat(wasteInput.value) || 0).toFixed(1)}%`
        );

        const coverage = parseFloat(plankAreaInput.value);
        if (coverage && coverage > 0) {
          const covUnit =
            plankAreaUnitSelect.value === "ft2" ? "ft²/box" : "m²/box";
          lines.push(`Coverage per box: ${coverage} ${covUnit}`);
        }
        lines.push("");

        lines.push("Rooms:");
        let index = 1;
        roomsTbody.querySelectorAll(".room-row").forEach((tr) => {
          const nameInput = tr.querySelector(".room-name");
          const name = nameInput.value || `Room ${index}`;
          const areaFt2 =
            parseFloat(tr.querySelector(".area-ft2").textContent) || 0;
          const areaM2 =
            parseFloat(tr.querySelector(".area-m2").textContent) || 0;
          lines.push(
            `- ${name}: ${areaFt2.toFixed(2)} ft² (${areaM2.toFixed(2)} m²)`
          );
          index++;
        });

        lines.push("");
        const totalFt2 = parseFloat(totalAreaFt2El.textContent) || 0;
        const totalM2 = parseFloat(totalAreaM2El.textContent) || 0;
        const neededFt2 = parseFloat(neededAreaFt2El.textContent) || 0;
        const neededM2 = parseFloat(neededAreaM2El.textContent) || 0;

        lines.push(
          `Total measured area: ${totalFt2.toFixed(2)} ft² (${totalM2.toFixed(
            2
          )} m²)`
        );
        lines.push(
          `Flooring needed (with waste): ${neededFt2.toFixed(
            2
          )} ft² (${neededM2.toFixed(2)} m²)`
        );

        const boxesText = boxesWrapper.classList.contains("hidden")
          ? null
          : boxesCountEl.textContent;
        if (boxesText && boxesText !== "0") {
          lines.push(`Estimated boxes: ${boxesText}`);
        }

        return lines.join("\n");
      }

      // Event listeners
      addRoomBtn.addEventListener("click", () => createRoomRow());
      unitSystemSelect.addEventListener("change", () => {
        updateUnitVisibility();
        recalcAll();
      });
      wasteInput.addEventListener("input", recalcAll);
      plankAreaInput.addEventListener("input", recalcAll);
      plankAreaUnitSelect.addEventListener("change", recalcAll);
      resetBtn.addEventListener("click", resetCalculator);
      printBtn.addEventListener("click", () => window.print());
      copySummaryBtn.addEventListener("click", async () => {
        try {
          const text = buildTextSummary();
          await navigator.clipboard.writeText(text);
          copyFeedback.classList.remove("hidden");
          setTimeout(() => copyFeedback.classList.add("hidden"), 2000);
        } catch (e) {
          alert("Copy failed. Please copy manually from the page.");
        }
      });

      // Initialize with two sample rooms
      document.addEventListener("DOMContentLoaded", () => {
        resetCalculator();
      });
    </script>

