<script>
  // Helper conversions
  function toFeet(value, unit) {
    const v = Number(value);
    switch (unit) {
      case 'ft': return v;
      case 'in': return v / 12;
      case 'yd': return v * 3;
      case 'm':  return v * 3.280839895;
      case 'cm': return v * 0.03280839895;
      default: return v;
    }
  }

  function areaToSqft(value, unit) {
    const v = Number(value);
    switch (unit) {
      case 'sqft': return v;
      case 'sqm':  return v * 10.7639104167;
      case 'sqyd': return v * 9;
      default: return v;
    }
  }

  function depthToFeet(value, unit) {
    return toFeet(value, unit);
  }

  function densityToTonsPerCy(value, unit) {
    const v = Number(value);
    if (!v || v <= 0) return 0;
    if (unit === 'tons_per_cy') return v;
    // kg/m3 -> tons/yd3
    if (unit === 'kg_per_m3') {
      const kgPerM3 = v;
      const m3PerYd3 = 0.764554857984; // 1 yd3 = 0.7646 m3
      const kgPerYd3 = kgPerM3 * m3PerYd3;
      const tonsPerYd3 = kgPerYd3 / 907.18474; // 1 US ton = 907.18474 kg
      return tonsPerYd3;
    }
    return v;
  }

  function bagVolumeCuFt(value, unit) {
    const v = Number(value);
    if (!v || v <= 0) return 0;
    if (unit === 'cuft') return v;
    if (unit === 'liters') {
      return v / 28.316846592; // L -> ft3
    }
    return v;
  }

  // Mode switching
  const modeButtons = {
    rectangle: document.getElementById('mode-rectangle'),
    circle: document.getElementById('mode-circle'),
    custom: document.getElementById('mode-custom')
  };
  const rectInputs = document.getElementById('rect-inputs');
  const circleInputs = document.getElementById('circle-inputs');
  const customAreaInputs = document.getElementById('custom-area-inputs');

  function setMode(mode) {
    Object.values(modeButtons).forEach(btn => btn.classList.remove('toggle-btn-active'));
    rectInputs.classList.add('hidden');
    circleInputs.classList.add('hidden');
    customAreaInputs.classList.add('hidden');

    if (mode === 'rectangle') {
      modeButtons.rectangle.classList.add('toggle-btn-active');
      rectInputs.classList.remove('hidden');
    } else if (mode === 'circle') {
      modeButtons.circle.classList.add('toggle-btn-active');
      circleInputs.classList.remove('hidden');
    } else if (mode === 'custom') {
      modeButtons.custom.classList.add('toggle-btn-active');
      customAreaInputs.classList.remove('hidden');
    }
    currentMode = mode;
  }

  let currentMode = 'rectangle';
  modeButtons.rectangle.addEventListener('click', () => setMode('rectangle'));
  modeButtons.circle.addEventListener('click', () => setMode('circle'));
  modeButtons.custom.addEventListener('click', () => setMode('custom'));

  // Calculation
  const calculateBtn = document.getElementById('calculate-btn');
  const resetBtn = document.getElementById('reset-btn');

  const resSummary = document.getElementById('results-summary');
  const resGrid = document.getElementById('results-grid');
  const resNote = document.getElementById('results-note');
  const resCy = document.getElementById('res-cy');
  const resCft = document.getElementById('res-cft');
  const resCm = document.getElementById('res-cm');
  const resTons = document.getElementById('res-tons');
  const resKg = document.getElementById('res-kg');
  const resBags = document.getElementById('res-bags');

  calculateBtn.addEventListener('click', () => {
    let areaSqFt = 0;

    if (currentMode === 'rectangle') {
      const length = parseFloat(document.getElementById('length').value);
      const width = parseFloat(document.getElementById('width').value);
      const lengthUnit = document.getElementById('length-unit').value;
      const widthUnit = document.getElementById('width-unit').value;

      if (!(length > 0) || !(width > 0)) {
        resSummary.textContent = 'Please enter positive length and width values.';
        resGrid.classList.add('hidden');
        resNote.classList.add('hidden');
        return;
      }

      const lengthFt = toFeet(length, lengthUnit);
      const widthFt = toFeet(width, widthUnit);
      areaSqFt = lengthFt * widthFt;
    } else if (currentMode === 'circle') {
      const radius = parseFloat(document.getElementById('radius').value);
      const radiusUnit = document.getElementById('radius-unit').value;

      if (!(radius > 0)) {
        resSummary.textContent = 'Please enter a positive radius.';
        resGrid.classList.add('hidden');
        resNote.classList.add('hidden');
        return;
      }

      const radiusFt = toFeet(radius, radiusUnit);
      areaSqFt = Math.PI * radiusFt * radiusFt;
    } else if (currentMode === 'custom') {
      const area = parseFloat(document.getElementById('area').value);
      const areaUnit = document.getElementById('area-unit').value;

      if (!(area > 0)) {
        resSummary.textContent = 'Please enter a positive area value.';
        resGrid.classList.add('hidden');
        resNote.classList.add('hidden');
        return;
      }

      areaSqFt = areaToSqft(area, areaUnit);
    }

    const depthVal = parseFloat(document.getElementById('depth').value);
    const depthUnit = document.getElementById('depth-unit').value;
    if (!(depthVal > 0)) {
      resSummary.textContent = 'Please enter a positive depth value.';
      resGrid.classList.add('hidden');
      resNote.classList.add('hidden');
      return;
    }

    const depthFt = depthToFeet(depthVal, depthUnit);
    let volumeFt3 = areaSqFt * depthFt;

    // Waste / contingency
    const wastePercent = parseFloat(document.getElementById('waste').value) || 0;
    if (wastePercent > 0) {
      volumeFt3 *= (1 + wastePercent / 100);
    }

    const volumeYd3 = volumeFt3 / 27;
    const volumeM3 = volumeFt3 / 35.3146667;

    // Density and weight
    const densityVal = parseFloat(document.getElementById('density').value);
    const densityUnit = document.getElementById('density-unit').value;
    const tonsPerYd3 = densityToTonsPerCy(densityVal, densityUnit);
    let tons = 0;
    let kg = 0;

    if (tonsPerYd3 > 0) {
      tons = volumeYd3 * tonsPerYd3;
      kg = tons * 907.18474;
    } else {
      kg = volumeM3 * 1400; // fallback typical density
      tons = kg / 907.18474;
    }

    // Bags
    const bagSizeVal = parseFloat(document.getElementById('bag-size').value);
    const bagUnit = document.getElementById('bag-unit').value;
    const bagCuFt = bagVolumeCuFt(bagSizeVal, bagUnit);
    let bags = 0;
    if (bagCuFt > 0) {
      bags = volumeFt3 / bagCuFt;
    }

    // Update UI
    resCy.textContent = volumeYd3.toFixed(2);
    resCft.textContent = volumeFt3.toFixed(1);
    resCm.textContent = volumeM3.toFixed(3);
    resTons.textContent = tons.toFixed(2);
    resKg.textContent = kg.toFixed(0);
    resBags.textContent = bags > 0 ? Math.ceil(bags).toString() + ' bags (approx.)' : '–';

    const areaRounded = areaSqFt.toFixed(0);
    resSummary.textContent = `For an area of about ${areaRounded} sq ft at a depth of ${depthVal} ${depthUnit}, you need approximately ${volumeYd3.toFixed(2)} cubic yards of topsoil.`;
    resGrid.classList.remove('hidden');
    resNote.classList.remove('hidden');
  });

  resetBtn.addEventListener('click', () => {
    document.getElementById('length').value = '';
    document.getElementById('width').value = '';
    document.getElementById('radius').value = '';
    document.getElementById('area').value = '';
    document.getElementById('depth').value = '';
    document.getElementById('waste').value = 10;
    document.getElementById('density').value = 1.2;
    document.getElementById('bag-size').value = 0.75;
    document.getElementById('length-unit').value = 'ft';
    document.getElementById('width-unit').value = 'ft';
    document.getElementById('radius-unit').value = 'ft';
    document.getElementById('area-unit').value = 'sqft';
    document.getElementById('depth-unit').value = 'in';
    document.getElementById('density-unit').value = 'tons_per_cy';
    document.getElementById('bag-unit').value = 'cuft';
    setMode('rectangle');

    resSummary.textContent = 'Enter your dimensions and click “Calculate topsoil” to see how much you need.';
    resGrid.classList.add('hidden');
    resNote.classList.add('hidden');
  });

  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
