    <script>
      // Simple Interest Calculator Logic
      (function () {
        const modeTabs = document.querySelectorAll(".mode-tab");
        const form = document.getElementById("simple-interest-form");
        const principalField = document.getElementById("field-principal");
        const rateField = document.getElementById("field-rate");
        const timeField = document.getElementById("field-time");
        const interestField = document.getElementById("field-interest");
        const amountField = document.getElementById("field-amount");

        const principalInput = document.getElementById("principal");
        const rateInput = document.getElementById("rate");
        const rateTypeSelect = document.getElementById("rate-type");
        const timeInput = document.getElementById("time");
        const timeUnitSelect = document.getElementById("time-unit");
        const interestInput = document.getElementById("interest-input");
        const amountInput = document.getElementById("amount-input");
        const currencySelect = document.getElementById("currency");
        const scenarioSelect = document.getElementById("scenario");
        const showStepsCheckbox = document.getElementById("show-steps");

        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");

        const resultsSection = document.getElementById("results-section");
        const resultInterest = document.getElementById("result-interest");
        const resultAmount = document.getElementById("result-amount");
        const resultPrincipal = document.getElementById("result-principal");
        const resultRateTime = document.getElementById("result-rate-time");
        const stepsContainer = document.getElementById("steps-container");
        const stepsContent = document.getElementById("steps-content");

        let currentMode = "interest"; // interest | principal | rate | time

        function setMode(mode) {
          currentMode = mode;
          modeTabs.forEach((tab) => {
            if (tab.dataset.mode === mode) {
              tab.classList.add("tab-active");
              tab.classList.add(
                "border-b-2",
                "border-blue-600",
                "text-blue-600"
              );
            } else {
              tab.classList.remove(
                "tab-active",
                "border-b-2",
                "border-blue-600",
                "text-blue-600"
              );
              tab.classList.add("text-gray-600");
            }
          });

          // Reset visibility
          principalField.classList.remove("hidden");
          rateField.classList.remove("hidden");
          timeField.classList.remove("hidden");
          interestField.classList.add("hidden");
          amountField.classList.add("hidden");

          principalInput.required = true;
          rateInput.required = true;
          timeInput.required = true;
          interestInput.required = false;
          amountInput.required = false;

          if (mode === "interest") {
            // Default: find interest and amount from P, r, t
          } else if (mode === "principal") {
            // Find P from I or A, r, t
            principalField.classList.add("hidden");
            principalInput.required = false;
            interestField.classList.remove("hidden");
            amountField.classList.remove("hidden");
            interestInput.required = false;
            amountInput.required = false;
          } else if (mode === "rate") {
            // Find r from P, I, t
            rateField.classList.add("hidden");
            rateInput.required = false;
            interestField.classList.remove("hidden");
            interestInput.required = true;
          } else if (mode === "time") {
            // Find t from P, I, r
            timeField.classList.add("hidden");
            timeInput.required = false;
            interestField.classList.remove("hidden");
            interestInput.required = true;
          }

          resultsSection.classList.add("hidden");
          stepsContainer.classList.add("hidden");
          stepsContent.innerHTML = "";
        }

        modeTabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            setMode(tab.dataset.mode);
          });
        });

        function parseNumber(input) {
          const value = parseFloat(input.value);
          return isNaN(value) ? null : value;
        }

        function timeToYears(t, unit) {
          if (t == null) return null;
          switch (unit) {
            case "years":
              return t;
            case "months":
              return t / 12;
            case "days-365":
              return t / 365;
            case "days-360":
              return t / 360;
            default:
              return t;
          }
        }

        function formatCurrency(value, symbol) {
          if (value == null || !isFinite(value)) return "–";
          const abs = Math.abs(value);
          let decimals = abs < 1 ? 4 : abs < 1000 ? 2 : 2;
          return (symbol || "") + value.toFixed(decimals);
        }

        function formatPercent(value) {
          if (value == null || !isFinite(value)) return "–";
          return value.toFixed(4).replace(/0+$/, "").replace(/\.$/, "") + "%";
        }

        function formatYears(tYears) {
          if (tYears == null || !isFinite(tYears)) return "–";
          if (tYears === 1) return "1 year";
          if (tYears < 1)
            return (
              (tYears * 12).toFixed(2).replace(/0+$/, "").replace(/\.$/, "") +
              " months"
            );
          return (
            tYears.toFixed(4).replace(/0+$/, "").replace(/\.$/, "") + " years"
          );
        }

        function buildSteps(
          mode,
          P,
          r,
          tYears,
          I,
          A,
          rateInputRaw,
          timeRaw,
          timeUnit
        ) {
          const steps = [];
          steps.push(
            "1. Start with the simple interest formula: I = P × r × t"
          );
          if (mode === "interest") {
            steps.push(
              `2. Convert the annual rate to decimal: r = ${rateInputRaw} / 100 = ${r.toFixed(
                6
              )}`
            );
            if (timeUnit !== "years") {
              steps.push(
                `3. Convert time to years based on unit (${timeUnit}): t = ${timeRaw} → ${tYears.toFixed(
                  6
                )} years`
              );
              steps.push(
                `4. Plug into the formula: I = ${P} × ${r.toFixed(
                  6
                )} × ${tYears.toFixed(6)}`
              );
            } else {
              steps.push(
                `3. Plug into the formula: I = ${P} × ${r.toFixed(
                  6
                )} × ${tYears.toFixed(6)}`
              );
            }
            steps.push(`5. Compute interest: I = ${I.toFixed(6)}`);
            steps.push(
              `6. Final amount: A = P + I = ${P} + ${I.toFixed(
                6
              )} = ${A.toFixed(6)}`
            );
          } else if (mode === "principal") {
            steps.push(
              "2. Rearranged formula for principal: P = I / (r × t) or P = A / (1 + r × t)"
            );
          } else if (mode === "rate") {
            steps.push("2. Rearranged formula for rate: r = I / (P × t)");
          } else if (mode === "time") {
            steps.push("2. Rearranged formula for time: t = I / (P × r)");
          }
          return steps;
        }

        calculateBtn.addEventListener("click", () => {
          const currencySymbol = currencySelect.value || "";
          const scenario = scenarioSelect.value;

          let P = parseNumber(principalInput);
          let rInput = parseNumber(rateInput);
          let tInput = parseNumber(timeInput);
          let I = parseNumber(interestInput);
          let A = parseNumber(amountInput);

          let r = null;
          if (currentMode !== "rate") {
            if (rInput != null) {
              r = rateTypeSelect.value === "percent" ? rInput / 100 : rInput;
            }
          }

          let tYears = null;
          if (currentMode !== "time") {
            tYears = timeToYears(tInput, timeUnitSelect.value);
          }

          let error = null;

          try {
            if (currentMode === "interest") {
              if (P == null || P < 0)
                throw new Error("Enter a valid principal.");
              if (r == null || r < 0) throw new Error("Enter a valid rate.");
              if (tYears == null || tYears < 0)
                throw new Error("Enter a valid time.");

              I = P * r * tYears;
              A = P + I;
            } else if (currentMode === "principal") {
              if (r == null || r <= 0) throw new Error("Enter a valid rate.");
              if (tYears == null || tYears <= 0)
                throw new Error("Enter a valid time.");
              const rt = r * tYears;

              if (I != null && I > 0) {
                P = I / rt;
                A = P * (1 + rt);
              } else if (A != null && A > 0) {
                P = A / (1 + rt);
                I = A - P;
              } else {
                throw new Error("Enter either interest or final amount.");
              }
            } else if (currentMode === "rate") {
              if (P == null || P <= 0)
                throw new Error("Enter a valid principal.");
              if (tYears == null || tYears <= 0)
                throw new Error("Enter a valid time.");
              if (I == null || I <= 0)
                throw new Error("Enter a valid interest amount.");
              r = I / (P * tYears);
              rInput = r * 100;
              A = P + I;
            } else if (currentMode === "time") {
              if (P == null || P <= 0)
                throw new Error("Enter a valid principal.");
              if (r == null || r <= 0) throw new Error("Enter a valid rate.");
              if (I == null || I <= 0)
                throw new Error("Enter a valid interest amount.");
              tYears = I / (P * r);
              A = P + I;
            }
          } catch (e) {
            error = e.message;
          }

          if (error) {
            resultsSection.classList.remove("hidden");
            resultInterest.textContent = error;
            resultAmount.textContent = "–";
            resultPrincipal.textContent = "–";
            resultRateTime.textContent = "–";
            stepsContainer.classList.add("hidden");
            stepsContent.innerHTML = "";
            return;
          }

          // Update results
          resultsSection.classList.remove("hidden");
          resultInterest.textContent = formatCurrency(
            I,
            currencySymbol + (scenario === "loan" ? " " : " ")
          );
          resultAmount.textContent = formatCurrency(A, currencySymbol);
          resultPrincipal.textContent = formatCurrency(P, currencySymbol);

          const ratePercent = r * 100;
          resultRateTime.textContent = `${formatPercent(
            ratePercent
          )} per year for about ${formatYears(tYears)}`;

          // Steps
          if (showStepsCheckbox.checked) {
            const steps = buildSteps(
              currentMode,
              P,
              r,
              tYears,
              I,
              A,
              rInput != null ? rInput : 0,
              tInput != null ? tInput : 0,
              timeUnitSelect.value
            );
            stepsContent.innerHTML = steps.map((s) => `<p>${s}</p>`).join("");
            stepsContainer.classList.remove("hidden");
          } else {
            stepsContainer.classList.add("hidden");
            stepsContent.innerHTML = "";
          }
        });

        resetBtn.addEventListener("click", () => {
          form.reset();
          setMode("interest");
          resultsSection.classList.add("hidden");
          stepsContainer.classList.add("hidden");
          stepsContent.innerHTML = "";
        });

        // Initialize default mode
        setMode("interest");
      })();
    </script>

