      function toCelsius(value, unit) {
        value = parseFloat(value);
        if (isNaN(value)) return NaN;
        return unit === "F" ? ((value - 32) * 5) / 9 : value;
      }

      function fromCtoF(c) {
        return (c * 9) / 5 + 32;
      }

      function windToMps(value, unit) {
        value = parseFloat(value);
        if (isNaN(value)) return NaN;
        if (unit === "kph") return value / 3.6;
        if (unit === "mph") return value * 0.44704;
        return value;
      }

      // Approximate natural wet-bulb temperature (Stull 2011-like empirical fit)
      function estimateWetBulb(TaC, RH) {
        const T = TaC;
        const rh = Math.min(Math.max(RH, 1), 100);
        const Tw =
          T * Math.atan(0.151977 * Math.sqrt(rh + 8.313659)) +
          Math.atan(T + rh) -
          Math.atan(rh - 1.676331) +
          0.00391838 * Math.pow(rh, 1.5) * Math.atan(0.023101 * rh) -
          4.686035;
        return Tw;
      }

      // Very simplified globe temperature estimate (screening only)
      function estimateGlobeTemp(TaC, solarWm2, windMps) {
        // Empirical: Tg ≈ Ta + a * (solar) / (b + wind)
        const a = 0.015; // sensitivity to radiation
        const b = 1.5; // damping from wind
        const Tg = TaC + (a * solarWm2) / (b + Math.max(windMps, 0.1));
        return Tg;
      }

      function classifyRisk(wbgtC) {
        if (wbgtC < 25) {
          return {
            label: "Low",
            color: "text-green-600",
            desc: "Low heat stress for most healthy, acclimatized adults in light–moderate work. Maintain hydration and normal breaks.",
          };
        } else if (wbgtC < 28) {
          return {
            label: "Moderate",
            color: "text-yellow-600",
            desc: "Moderate heat stress. Increase monitoring, schedule extra breaks, and ensure easy access to cool water and shade.",
          };
        } else if (wbgtC < 31) {
          return {
            label: "High",
            color: "text-orange-600",
            desc: "High heat stress. Implement work–rest cycles, reduce workload, and closely monitor workers for early signs of heat illness.",
          };
        } else {
          return {
            label: "Very high / extreme",
            color: "text-red-600",
            desc: "Very high heat stress. Only very light work or complete rest is recommended. Consider postponing activities and have emergency plans ready.",
          };
        }
      }

      const calcBtn = document.getElementById("calcBtn");
      const resetBtn = document.getElementById("resetBtn");
      const inputError = document.getElementById("inputError");
      const resultsCard = document.getElementById("resultsCard");
      const wbgtValueEl = document.getElementById("wbgtValue");
      const wbgtValueFEl = document.getElementById("wbgtValueF");
      const riskLabelEl = document.getElementById("riskLabel");
      const riskDescEl = document.getElementById("riskDesc");
      const summaryTaEl = document.getElementById("summaryTa");
      const summaryTnwbEl = document.getElementById("summaryTnwb");
      const summaryTgEl = document.getElementById("summaryTg");

      calcBtn.addEventListener("click", () => {
        inputError.classList.add("hidden");

        let TaC, TnwbC, TgC;

        if (currentMode === "direct") {
          const ta = document.getElementById("ta_direct").value;
          const taUnit = document.getElementById("ta_direct_unit").value;
          const tnwb = document.getElementById("tnwb_direct").value;
          const tnwbUnit = document.getElementById("tnwb_direct_unit").value;
          const tg = document.getElementById("tg_direct").value;
          const tgUnit = document.getElementById("tg_direct_unit").value;

          TaC = toCelsius(ta, taUnit);
          TnwbC = toCelsius(tnwb, tnwbUnit);
          TgC = toCelsius(tg, tgUnit);

          if ([TaC, TnwbC, TgC].some((v) => isNaN(v))) {
            inputError.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }
        } else {
          const ta = document.getElementById("ta_meteo").value;
          const taUnit = document.getElementById("ta_meteo_unit").value;
          const rh = parseFloat(document.getElementById("rh_meteo").value);
          const tg = document.getElementById("tg_meteo").value;
          const tgUnit = document.getElementById("tg_meteo_unit").value;
          const solar = parseFloat(
            document.getElementById("solar_meteo").value
          );
          const wind = document.getElementById("wind_meteo").value;
          const windUnit = document.getElementById("wind_meteo_unit").value;

          TaC = toCelsius(ta, taUnit);
          const RH = rh;
          const windMps = windToMps(wind, windUnit);

          if (isNaN(TaC) || isNaN(RH) || isNaN(windMps)) {
            inputError.classList.remove("hidden");
            resultsCard.classList.add("hidden");
            return;
          }

          TnwbC = estimateWetBulb(TaC, RH);

          if (tg && tg.trim() !== "") {
            TgC = toCelsius(tg, tgUnit);
          } else {
            const solarVal = isNaN(solar) ? 600 : solar;
            TgC = estimateGlobeTemp(TaC, solarVal, windMps);
          }
        }

        let wbgtC;
        if (currentEnv === "outdoor") {
          wbgtC = 0.7 * TnwbC + 0.2 * TgC + 0.1 * TaC;
        } else {
          wbgtC = 0.7 * TnwbC + 0.3 * TgC;
        }

        const wbgtF = fromCtoF(wbgtC);
        const risk = classifyRisk(wbgtC);

        wbgtValueEl.textContent = wbgtC.toFixed(1) + " °C";
        wbgtValueFEl.textContent = "(" + wbgtF.toFixed(1) + " °F)";
        riskLabelEl.textContent = risk.label;
        riskLabelEl.className = "font-semibold text-lg " + risk.color;
        riskDescEl.textContent = risk.desc;

        summaryTaEl.textContent =
          TaC.toFixed(1) + " °C (" + fromCtoF(TaC).toFixed(1) + " °F)";
        summaryTnwbEl.textContent =
          TnwbC.toFixed(1) + " °C (" + fromCtoF(TnwbC).toFixed(1) + " °F)";
        summaryTgEl.textContent =
          TgC.toFixed(1) + " °C (" + fromCtoF(TgC).toFixed(1) + " °F)";

        resultsCard.classList.remove("hidden");
      });

      resetBtn.addEventListener("click", () => {
        document.getElementById("ta_direct").value = 30;
        document.getElementById("tnwb_direct").value = 26;
        document.getElementById("tg_direct").value = 40;

        document.getElementById("ta_meteo").value = 30;
        document.getElementById("rh_meteo").value = 60;
        document.getElementById("tg_meteo").value = "";
        document.getElementById("solar_meteo").value = 600;
        document.getElementById("wind_meteo").value = 1.0;

        inputError.classList.add("hidden");
        resultsCard.classList.add("hidden");
      });

      // Mobile menu script (simple)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const isHidden = mobileMenu.classList.contains("hidden");
          mobileMenu.classList.toggle("hidden", !isHidden);
          mobileToggle.setAttribute(
            "aria-expanded",
            isHidden ? "true" : "false"
          );
        });
      }

