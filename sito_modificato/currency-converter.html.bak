    <script>
      document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll("#faq .faq-question").forEach(function (btn) {
          btn.addEventListener("click", function () {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              icon.textContent = "−";
            }
          });
        });
      });

      // --- Currency converter logic ---
      const CURRENCY_LIST = [
        { code: "USD", name: "US Dollar" },
        { code: "EUR", name: "Euro" },
        { code: "GBP", name: "British Pound" },
        { code: "JPY", name: "Japanese Yen" },
        { code: "CAD", name: "Canadian Dollar" },
        { code: "AUD", name: "Australian Dollar" },
        { code: "CHF", name: "Swiss Franc" },
        { code: "CNY", name: "Chinese Yuan" },
        { code: "INR", name: "Indian Rupee" },
        { code: "BRL", name: "Brazilian Real" },
        { code: "MXN", name: "Mexican Peso" },
        { code: "ZAR", name: "South African Rand" },
        { code: "SEK", name: "Swedish Krona" },
        { code: "NZD", name: "New Zealand Dollar" },
        { code: "SGD", name: "Singapore Dollar" },
        { code: "HKD", name: "Hong Kong Dollar" },
      ];

      const amountEl = document.getElementById("amount");
      const fromEl = document.getElementById("fromCurrency");
      const toEl = document.getElementById("toCurrency");
      const swapBtn = document.getElementById("swapBtn");
      const resultDisplay = document.getElementById("resultDisplay");
      const rateLine = document.getElementById("rateLine");
      const lastUpdatedLabel = document.getElementById("lastUpdatedLabel");
      const feePercentEl = document.getElementById("feePercent");
      const feeDirectionEl = document.getElementById("feeDirection");
      const feeImpactLine = document.getElementById("feeImpactLine");
      const effectiveRateLine = document.getElementById("effectiveRateLine");
      const quickRatesEl = document.getElementById("quickRates");
      const quickBaseLabel = document.getElementById("quickBaseLabel");
      const historyPairLabel = document.getElementById("historyPairLabel");
      const historySummary = document.getElementById("historySummary");
      const historyCanvas = document.getElementById("historyChart");

      let ratesData = null; // { base: 'USD', rates: { 'EUR': 0.9, ... }, timestamp: 123 }
      let historyData = []; // [{date, rate}, ...]

      function populateCurrencySelect(selectEl) {
        CURRENCY_LIST.forEach((c) => {
          const opt = document.createElement("option");
          opt.value = c.code;
          opt.textContent = `${c.code} — ${c.name}`;
          selectEl.appendChild(opt);
        });
      }

      function initCurrencies() {
        populateCurrencySelect(fromEl);
        populateCurrencySelect(toEl);
        fromEl.value = "USD";
        toEl.value = "EUR";
        quickBaseLabel.textContent = fromEl.value;
        historyPairLabel.textContent = `${fromEl.value} → ${toEl.value}`;
      }

      async function fetchRates(base = "USD") {
        try {
          // Using exchangerate.host (free, no key) as example source
          const res = await fetch(
            `https://api.exchangerate.host/latest?base=${encodeURIComponent(
              base
            )}`
          );
          const data = await res.json();
          if (!data || !data.rates) throw new Error("Invalid rate data");
          ratesData = {
            base: data.base || base,
            rates: data.rates,
            timestamp: data.timestamp ? data.timestamp * 1000 : Date.now(),
          };
          updateRateInfo();
          updateConversion();
          updateQuickRates();
          fetchHistory(); // refresh history when base/to changes
        } catch (err) {
          console.error(err);
          rateLine.textContent =
            "Unable to load live exchange rates. Showing last known values if available.";
        }
      }

      async function fetchHistory() {
        if (!ratesData) return;
        const base = fromEl.value;
        const symbol = toEl.value;
        historyPairLabel.textContent = `${base} → ${symbol}`;
        const end = new Date();
        const start = new Date();
        start.setDate(end.getDate() - 30);
        const startStr = start.toISOString().slice(0, 10);
        const endStr = end.toISOString().slice(0, 10);
        try {
          const url = `https://api.exchangerate.host/timeseries?base=${encodeURIComponent(
            base
          )}&symbols=${encodeURIComponent(
            symbol
          )}&start_date=${startStr}&end_date=${endStr}`;
          const res = await fetch(url);
          const data = await res.json();
          if (!data || !data.rates) throw new Error("Invalid history data");
          historyData = Object.keys(data.rates)
            .sort()
            .map((d) => ({
              date: d,
              rate: data.rates[d][symbol],
            }));
          drawHistoryChart();
        } catch (e) {
          console.error(e);
          historySummary.textContent =
            "Historical data is currently unavailable.";
        }
      }

      function updateRateInfo() {
        if (!ratesData) return;
        const base = fromEl.value;
        const to = toEl.value;
        let rate;
        if (base === ratesData.base) {
          rate = ratesData.rates[to];
        } else {
          // cross rate: base->USD->to
          const toBase = ratesData.rates[base];
          const toTarget = ratesData.rates[to];
          if (toBase && toTarget) {
            rate = toTarget / toBase;
          }
        }
        if (!rate) {
          rateLine.textContent = "Rate not available for this pair.";
          return;
        }
        rateLine.textContent = `1 ${base} = ${rate.toFixed(
          6
        )} ${to} (mid-market rate)`;
        const dt = new Date(ratesData.timestamp);
        lastUpdatedLabel.textContent = `Last updated: ${dt.toLocaleString()}`;
      }

      function applyFee(amount, rate) {
        const feePct = parseFloat(feePercentEl.value) || 0;
        if (!feePct) {
          feeImpactLine.textContent = "No fee applied.";
          effectiveRateLine.textContent = "";
          return { netAmount: amount * rate, effectiveRate: rate };
        }
        const feeFraction = feePct / 100;
        let netAmount, effectiveRate;
        if (feeDirectionEl.value === "deduct") {
          const gross = amount * rate;
          netAmount = gross * (1 - feeFraction);
          effectiveRate = netAmount / amount;
          feeImpactLine.textContent = `Fee deducted from converted amount: ${feePct.toFixed(
            2
          )}%`;
        } else {
          const markedRate = rate * (1 - feeFraction);
          netAmount = amount * markedRate;
          effectiveRate = markedRate;
          feeImpactLine.textContent = `Rate marked up by ${feePct.toFixed(
            2
          )}% (worse rate).`;
        }
        effectiveRateLine.textContent = `Effective rate: 1 ${
          fromEl.value
        } = ${effectiveRate.toFixed(6)} ${toEl.value}`;
        return { netAmount, effectiveRate };
      }

      function updateConversion() {
        if (!ratesData) return;
        const amount = parseFloat(amountEl.value);
        if (isNaN(amount) || amount < 0) {
          resultDisplay.textContent = "Enter a valid amount.";
          return;
        }
        const base = fromEl.value;
        const to = toEl.value;
        let rate;
        if (base === ratesData.base) {
          rate = ratesData.rates[to];
        } else {
          const toBase = ratesData.rates[base];
          const toTarget = ratesData.rates[to];
          if (toBase && toTarget) {
            rate = toTarget / toBase;
          }
        }
        if (!rate) {
          resultDisplay.textContent = "Rate not available for this pair.";
          return;
        }
        const { netAmount } = applyFee(amount, rate);
        resultDisplay.textContent = `${netAmount.toLocaleString(undefined, {
          maximumFractionDigits: 4,
        })} ${to}`;
        updateRateInfo();
        quickBaseLabel.textContent = base;
        historyPairLabel.textContent = `${base} → ${to}`;
      }

      function updateQuickRates() {
        if (!ratesData) return;
        const base = fromEl.value;
        const popularTargets = [
          "USD",
          "EUR",
          "GBP",
          "JPY",
          "CAD",
          "AUD",
          "CHF",
        ];
        quickRatesEl.innerHTML = "";
        popularTargets
          .filter((code) => code !== base)
          .forEach((code) => {
            let rate;
            if (base === ratesData.base) {
              rate = ratesData.rates[code];
            } else {
              const toBase = ratesData.rates[base];
              const toTarget = ratesData.rates[code];
              if (toBase && toTarget) {
                rate = toTarget / toBase;
              }
            }
            if (!rate) return;
            const btn = document.createElement("button");
            btn.type = "button";
            btn.className =
              "card-hover whitespace-nowrap px-3 py-2 bg-white border border-gray-200 rounded-md flex flex-col text-left";
            btn.innerHTML = `
          <span class="text-xs text-gray-500">${code}</span>
          <span class="font-semibold text-gray-800 rate-badge">1 ${base} = ${rate.toFixed(
              4
            )} ${code}</span>
        `;
            btn.addEventListener("click", () => {
              toEl.value = code;
              updateConversion();
              fetchHistory();
            });
            quickRatesEl.appendChild(btn);
          });
      }

      function drawHistoryChart() {
        if (!historyCanvas || !historyData.length) {
          historySummary.textContent =
            "Historical data is currently unavailable.";
          return;
        }
        const ctx = historyCanvas.getContext("2d");
        const w = (historyCanvas.width = historyCanvas.clientWidth || 600);
        const h = (historyCanvas.height = historyCanvas.clientHeight || 200);

        const rates = historyData.map((d) => d.rate);
        const min = Math.min(...rates);
        const max = Math.max(...rates);
        const pad = (max - min) * 0.1 || 0.001;
        const yMin = min - pad;
        const yMax = max + pad;

        ctx.clearRect(0, 0, w, h);
        ctx.strokeStyle = "#e5e7eb";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(0, h - 20);
        ctx.lineTo(w, h - 20);
        ctx.stroke();

        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 2;
        ctx.beginPath();
        historyData.forEach((point, i) => {
          const x = (i / (historyData.length - 1 || 1)) * (w - 20) + 10;
          const norm = (point.rate - yMin) / (yMax - yMin || 1);
          const y = h - 20 - norm * (h - 40);
          if (i === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        });
        ctx.stroke();

        const first = historyData[0].rate;
        const last = historyData[historyData.length - 1].rate;
        const change = last - first;
        const changePct = (change / first) * 100;
        historySummary.textContent =
          `Over the last ${
            historyData.length
          } days, the rate moved from ${first.toFixed(4)} to ${last.toFixed(
            4
          )} ` +
          `(${change >= 0 ? "+" : ""}${change.toFixed(4)}, ${
            changePct >= 0 ? "+" : ""
          }${changePct.toFixed(2)}%).`;
      }

      document.addEventListener("DOMContentLoaded", () => {
        initCurrencies();
        fetchRates(fromEl.value);

        amountEl.addEventListener("input", updateConversion);
        fromEl.addEventListener("change", () => {
          quickBaseLabel.textContent = fromEl.value;
          fetchRates(fromEl.value);
        });
        toEl.addEventListener("change", () => {
          updateConversion();
          fetchHistory();
        });
        swapBtn.addEventListener("click", () => {
          const tmp = fromEl.value;
          fromEl.value = toEl.value;
          toEl.value = tmp;
          quickBaseLabel.textContent = fromEl.value;
          fetchRates(fromEl.value);
        });
        feePercentEl.addEventListener("input", updateConversion);
        feeDirectionEl.addEventListener("change", updateConversion);
      });
    </script>

