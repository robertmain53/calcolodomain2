    <script>
      // Utility: normal CDF approximation (for percentile)
      function normalCdf(z) {
        // Abramowitz & Stegun approximation
        const t = 1 / (1 + 0.2316419 * Math.abs(z));
        const d = 0.3989423 * Math.exp((-z * z) / 2);
        let prob =
          d *
          t *
          (0.3193815 +
            t * (-0.3565638 + t * (1.781478 + t * (-1.821256 + t * 1.330274))));
        if (z > 0) prob = 1 - prob;
        return prob;
      }

      // Approximate height z-score using very simplified age/sex means and SDs
      function approximateHeightZ(ageYears, sex, heightCm) {
        // crude linear approximations for mean and SD by age and sex
        const a = Math.max(1, Math.min(17, ageYears));
        let mean, sd;
        if (sex === "male") {
          mean = 75 + 6 * a; // rough
        } else {
          mean = 74 + 5.8 * a;
        }
        sd = 5 + 0.3 * a; // wider spread in older kids
        return (heightCm - mean) / sd;
      }

      function clamp(val, min, max) {
        return Math.min(max, Math.max(min, val));
      }

      // Approximate BP distribution parameters (very simplified, inspired by AAP tables)
      function getBpParams(ageYears, sex, heightPct) {
        const a = clamp(ageYears, 1, 17);
        const h = clamp(heightPct, 5, 95);

        // Base means by age (rough)
        let baseSbp, baseDbp;
        if (sex === "male") {
          baseSbp = 80 + 1.8 * a;
          baseDbp = 45 + 1.2 * a;
        } else {
          baseSbp = 79 + 1.7 * a;
          baseDbp = 46 + 1.1 * a;
        }

        // Height effect: taller kids tend to have slightly higher BP
        const heightEffect = (h - 50) * 0.08; // ~±3–4 mmHg across 5th–95th
        const meanSbp = baseSbp + heightEffect;
        const meanDbp = baseDbp + heightEffect * 0.6;

        // SDs (approx)
        const sdSbp = 8;
        const sdDbp = 7;

        return { meanSbp, sdSbp, meanDbp, sdDbp };
      }

      function classifyBp(ageYears, sbp, dbp, sbpPct, dbpPct) {
        const age = ageYears;
        const maxPct = Math.max(sbpPct, dbpPct);

        if (age >= 13) {
          // Adolescent thresholds (adult-style)
          if (sbp >= 140 || dbp >= 90) {
            return {
              category: "Stage 2 hypertension",
              detail:
                "BP ≥ 140/90 mmHg in adolescents ≥ 13 years is considered stage 2 hypertension in the AAP 2017 guideline.",
            };
          } else if ((sbp >= 130 && sbp <= 139) || (dbp >= 80 && dbp <= 89)) {
            return {
              category: "Stage 1 hypertension",
              detail:
                "BP 130/80–139/89 mmHg in adolescents ≥ 13 years is classified as stage 1 hypertension.",
            };
          } else if (sbp >= 120 && sbp <= 129 && dbp < 80) {
            return {
              category: "Elevated blood pressure",
              detail:
                "Systolic BP 120–129 mmHg with diastolic < 80 mmHg in adolescents ≥ 13 years is considered elevated BP.",
            };
          } else {
            return {
              category: "Normal blood pressure",
              detail:
                "BP < 120/< 80 mmHg in adolescents ≥ 13 years is considered normal.",
            };
          }
        } else {
          // Children < 13 years: percentile-based
          if (maxPct < 90) {
            return {
              category: "Normal blood pressure",
              detail:
                "Both systolic and diastolic BP are below the 90th percentile for age, sex, and height.",
            };
          } else if (maxPct >= 90 && maxPct < 95) {
            return {
              category: "Elevated blood pressure",
              detail:
                "At least one of systolic or diastolic BP is between the 90th and 95th percentile.",
            };
          } else if (maxPct >= 95 && maxPct < 99) {
            return {
              category: "Stage 1 hypertension (approximate)",
              detail:
                "At least one of systolic or diastolic BP is at or above the 95th percentile but below the 99th percentile. Exact thresholds also consider +12 mmHg above the 95th percentile.",
            };
          } else {
            return {
              category: "Stage 2 hypertension (approximate)",
              detail:
                "At least one of systolic or diastolic BP is at or above the 99th percentile. In practice, stage 2 is defined as ≥ 95th percentile + 12 mmHg or ≥ 140/90 mmHg, whichever is lower.",
            };
          }
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("bp-form");
        const calcBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const results = document.getElementById("results");

        const sbpPctEl = document.getElementById("sbpPercentile");
        const dbpPctEl = document.getElementById("dbpPercentile");
        const sbpZEl = document.getElementById("sbpZscore");
        const dbpZEl = document.getElementById("dbpZscore");
        const catEl = document.getElementById("bpCategory");
        const catDetailEl = document.getElementById("bpCategoryDetail");

        calcBtn.addEventListener("click", function () {
          const ageYears = parseInt(document.getElementById("age").value, 10);
          const ageMonths = parseInt(
            document.getElementById("ageMonths").value || "0",
            10
          );
          const sex = (form.sex.value || "male").toLowerCase();
          const sbp = parseFloat(document.getElementById("sbp").value);
          const dbp = parseFloat(document.getElementById("dbp").value);
          const heightVal = document.getElementById("height").value;
          const heightUnit = document.getElementById("heightUnit").value;
          const heightPctInput = document.getElementById("heightPct").value;

          if (
            isNaN(ageYears) ||
            ageYears < 1 ||
            ageYears > 17 ||
            isNaN(sbp) ||
            isNaN(dbp)
          ) {
            alert("Please enter age (1–17 years) and both SBP and DBP.");
            return;
          }

          const ageDecimal = ageYears + (isNaN(ageMonths) ? 0 : ageMonths / 12);

          // Determine height percentile
          let heightPct;
          if (heightPctInput) {
            heightPct = clamp(parseFloat(heightPctInput), 1, 99);
          } else if (heightVal) {
            let h = parseFloat(heightVal);
            if (heightUnit === "in") {
              h = h * 2.54;
            }
            const zH = approximateHeightZ(ageDecimal, sex, h);
            heightPct = clamp(Math.round(normalCdf(zH) * 100), 1, 99);
          } else {
            // If no height info, assume median (50th percentile)
            heightPct = 50;
          }

          const params = getBpParams(ageDecimal, sex, heightPct);
          const zSbp = (sbp - params.meanSbp) / params.sdSbp;
          const zDbp = (dbp - params.meanDbp) / params.sdDbp;

          const sbpPct = clamp(Math.round(normalCdf(zSbp) * 100), 1, 99);
          const dbpPct = clamp(Math.round(normalCdf(zDbp) * 100), 1, 99);

          sbpPctEl.textContent = sbpPct + "th percentile";
          dbpPctEl.textContent = dbpPct + "th percentile";
          sbpZEl.textContent = "Z-score: " + zSbp.toFixed(2);
          dbpZEl.textContent = "Z-score: " + zDbp.toFixed(2);

          const classification = classifyBp(
            ageDecimal,
            sbp,
            dbp,
            sbpPct,
            dbpPct
          );
          catEl.textContent = classification.category;
          catDetailEl.textContent = classification.detail;

          results.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", function () {
          form.reset();
          results.classList.add("hidden");
        });
      });
    </script>

