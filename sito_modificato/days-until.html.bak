    <script>
      // Utility: format date as readable string
      function formatDateReadable(date) {
        if (!(date instanceof Date) || isNaN(date)) return "";
        return date.toLocaleDateString(undefined, {
          year: "numeric",
          month: "long",
          day: "numeric",
        });
      }

      function normalizeToLocalMidnight(d) {
        const nd = new Date(d.getFullYear(), d.getMonth(), d.getDate());
        return nd;
      }

      function diffInDaysExclusive(start, end) {
        const msPerDay = 24 * 60 * 60 * 1000;
        const startMid = normalizeToLocalMidnight(start);
        const endMid = normalizeToLocalMidnight(end);
        return Math.round((endMid - startMid) / msPerDay);
      }

      function countBusinessAndWeekendDays(start, end) {
        const startMid = normalizeToLocalMidnight(start);
        const endMid = normalizeToLocalMidnight(end);
        let business = 0;
        let weekend = 0;

        if (endMid < startMid) {
          // swap to always count forward
          const tmp = startMid;
          startMid = endMid;
          endMid = tmp;
        }

        const current = new Date(startMid);
        while (current < endMid) {
          const day = current.getDay(); // 0=Sun, 6=Sat
          if (day === 0 || day === 6) {
            weekend++;
          } else {
            business++;
          }
          current.setDate(current.getDate() + 1);
        }
        return { business, weekend };
      }

      function calculateDaysUntil() {
        const startInput = document.getElementById("start-date");
        const endInput = document.getElementById("end-date");
        const includeToday = document.getElementById("include-today").checked;
        const businessOnly =
          document.getElementById("business-days-only").checked;

        const errorEl = document.getElementById("error-message");
        const resultContainer = document.getElementById("result-container");
        const statusEl = document.getElementById("result-status");
        const sentenceEl = document.getElementById("result-sentence");
        const daysEl = document.getElementById("result-days");
        const weeksEl = document.getElementById("result-weeks");
        const monthsEl = document.getElementById("result-months");
        const yearsEl = document.getElementById("result-years");
        const businessEl = document.getElementById("result-business-days");
        const weekendEl = document.getElementById("result-weekend-days");
        const totalRawEl = document.getElementById("result-total-days-raw");

        errorEl.classList.add("hidden");
        resultContainer.classList.add("hidden");

        if (!startInput.value || !endInput.value) {
          errorEl.textContent =
            "Please select both a start date and an end date.";
          errorEl.classList.remove("hidden");
          return;
        }

        const startDate = new Date(startInput.value + "T00:00:00");
        const endDate = new Date(endInput.value + "T00:00:00");

        if (isNaN(startDate) || isNaN(endDate)) {
          errorEl.textContent =
            "One or both dates are invalid. Please check your input.";
          errorEl.classList.remove("hidden");
          return;
        }

        const rawDays = diffInDaysExclusive(startDate, endDate);
        let direction = "future"; // or 'past' or 'same'
        if (rawDays === 0) {
          direction = "same";
        } else if (rawDays < 0) {
          direction = "past";
        }

        let adjustedDays = rawDays;
        if (includeToday && direction !== "same") {
          // If counting towards future, add 1; if in past, subtract 1 to keep sign consistent
          adjustedDays = rawDays > 0 ? rawDays + 1 : rawDays - 1;
        }

        // Absolute values for display in weeks/months/years
        const absDays = Math.abs(adjustedDays);
        const weeks = absDays / 7;
        const months = absDays / 30.44;
        const years = absDays / 365.25;

        // Business / weekend days (always based on forward range)
        const { business, weekend } = countBusinessAndWeekendDays(
          startDate,
          endDate
        );

        // Status badge
        if (direction === "same") {
          statusEl.textContent = "Today";
          statusEl.className = "result-badge bg-green-100 text-green-700";
        } else if (direction === "future") {
          statusEl.textContent = "In the future";
          statusEl.className = "result-badge bg-blue-100 text-blue-700";
        } else {
          statusEl.textContent = "In the past";
          statusEl.className = "result-badge bg-yellow-100 text-yellow-700";
        }

        // Human-friendly sentence
        const startStr = formatDateReadable(startDate);
        const endStr = formatDateReadable(endDate);
        let sentence = "";

        if (direction === "same") {
          sentence = `The start date and end date are the same (${startStr}).`;
        } else if (direction === "future") {
          const label = includeToday ? "including today" : "excluding today";
          sentence = `There are ${absDays.toLocaleString()} day${
            absDays === 1 ? "" : "s"
          } until ${endStr} (${label}), starting from ${startStr}.`;
        } else {
          const label = includeToday ? "including today" : "excluding today";
          sentence = `${endStr} was ${absDays.toLocaleString()} day${
            absDays === 1 ? "" : "s"
          } ago (${label}), relative to ${startStr}.`;
        }

        // If user selected business days only, override main "days" with business count (keeping others for reference)
        let mainDaysDisplay = adjustedDays;
        if (businessOnly && direction !== "same") {
          const sign = adjustedDays >= 0 ? 1 : -1;
          mainDaysDisplay = sign * business;
        }

        daysEl.textContent = mainDaysDisplay.toLocaleString();
        weeksEl.textContent = weeks.toFixed(2);
        monthsEl.textContent = months.toFixed(2);
        yearsEl.textContent = years.toFixed(3);
        businessEl.textContent = business.toLocaleString();
        weekendEl.textContent = weekend.toLocaleString();
        totalRawEl.textContent = rawDays.toLocaleString();
        sentenceEl.textContent = sentence;

        resultContainer.classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", function () {
        const today = new Date();
        const isoToday = today.toISOString().slice(0, 10);

        const startInput = document.getElementById("start-date");
        const endInput = document.getElementById("end-date");
        const includeToday = document.getElementById("include-today");
        const calcBtn = document.getElementById("calculate-btn");
        const setTodayStartBtn = document.getElementById("set-today-start");
        const setTodayEndBtn = document.getElementById("set-today-end");
        const swapBtn = document.getElementById("swap-dates");
        const copyBtn = document.getElementById("copy-result");
        const copyFeedback = document.getElementById("copy-feedback");

        if (startInput && endInput) {
          startInput.value = isoToday;
          // Default end date: 30 days from today
          const defaultEnd = new Date(today);
          defaultEnd.setDate(defaultEnd.getDate() + 30);
          endInput.value = defaultEnd.toISOString().slice(0, 10);
        }

        if (includeToday) {
          includeToday.checked = false;
        }

        if (calcBtn) {
          calcBtn.addEventListener("click", calculateDaysUntil);
        }

        if (setTodayStartBtn) {
          setTodayStartBtn.addEventListener("click", function () {
            startInput.value = isoToday;
            calculateDaysUntil();
          });
        }

        if (setTodayEndBtn) {
          setTodayEndBtn.addEventListener("click", function () {
            endInput.value = isoToday;
            calculateDaysUntil();
          });
        }

        if (swapBtn) {
          swapBtn.addEventListener("click", function () {
            const tmp = startInput.value;
            startInput.value = endInput.value;
            endInput.value = tmp;
            calculateDaysUntil();
          });
        }

        if (copyBtn) {
          copyBtn.addEventListener("click", function () {
            const sentenceEl = document.getElementById("result-sentence");
            const daysEl = document.getElementById("result-days");
            const weeksEl = document.getElementById("result-weeks");
            const monthsEl = document.getElementById("result-months");
            const yearsEl = document.getElementById("result-years");

            if (!sentenceEl || !sentenceEl.textContent) return;

            const summary = `${sentenceEl.textContent}\n\nSummary: ${daysEl.textContent} days, ${weeksEl.textContent} weeks, ${monthsEl.textContent} months, ${yearsEl.textContent} years (approx.).`;

            if (navigator.clipboard && navigator.clipboard.writeText) {
              navigator.clipboard
                .writeText(summary)
                .then(function () {
                  copyFeedback.classList.remove("hidden");
                  setTimeout(() => copyFeedback.classList.add("hidden"), 2000);
                })
                .catch(function () {
                  copyFeedback.textContent = "Copy failed";
                  copyFeedback.classList.remove("hidden");
                  setTimeout(() => copyFeedback.classList.add("hidden"), 2000);
                });
            }
          });
        }

        // Auto-calc on load with defaults
        calculateDaysUntil();
      });
    </script>

