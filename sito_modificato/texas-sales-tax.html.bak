    <script>
      // Texas Sales Tax Calculator Logic
      (function () {
        const modeEl = document.getElementById("calc-mode");
        const rateEl = document.getElementById("tx-rate");
        const amountInputEl = document.getElementById("amount-input");
        const amountLabelEl = document.querySelector(
          "#amount-input-wrapper label"
        );
        const roundingEl = document.getElementById("rounding");
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const resultsCard = document.getElementById("results-card");
        const resultPriceEl = document.getElementById("result-price");
        const resultTaxEl = document.getElementById("result-tax");
        const resultTotalEl = document.getElementById("result-total");
        const resultEffectiveRateEl = document.getElementById(
          "result-effective-rate"
        );
        const errorMsgEl = document.getElementById("error-msg");
        const rateChips = document.querySelectorAll(".rate-chip");

        function formatMoney(value, roundingMode) {
          if (roundingMode === "none") {
            return "$" + (isFinite(value) ? value.toString() : "0");
          }
          let decimals = parseInt(roundingMode, 10);
          if (isNaN(decimals)) decimals = 2;
          return "$" + value.toFixed(decimals);
        }

        function parsePositiveNumber(value) {
          const num = parseFloat(value);
          if (isNaN(num) || num < 0) return null;
          return num;
        }

        function updateAmountLabel() {
          const mode = modeEl.value;
          if (mode === "fromPrice" || mode === "taxOnly") {
            amountLabelEl.textContent =
              mode === "taxOnly"
                ? "Price before tax (to compute tax only)"
                : "Price before tax";
          } else if (mode === "fromTotal") {
            amountLabelEl.textContent = "Total price (with tax)";
          }
        }

        modeEl.addEventListener("change", updateAmountLabel);

        rateChips.forEach((chip) => {
          chip.addEventListener("click", () => {
            const r = chip.getAttribute("data-rate");
            if (r !== null) {
              rateEl.value = r;
            }
          });
        });

        function calculate() {
          errorMsgEl.classList.add("hidden");
          errorMsgEl.textContent = "";
          resultsCard.classList.add("hidden");

          const mode = modeEl.value;
          const ratePercent = parsePositiveNumber(rateEl.value);
          const amount = parsePositiveNumber(amountInputEl.value);
          const roundingMode = roundingEl.value;

          if (ratePercent === null) {
            errorMsgEl.textContent = "Please enter a valid tax rate.";
            errorMsgEl.classList.remove("hidden");
            return;
          }
          if (ratePercent > 8.25) {
            errorMsgEl.textContent =
              "In Texas, the maximum combined state and local rate is 8.25%. Please enter 8.25 or less.";
            errorMsgEl.classList.remove("hidden");
            return;
          }
          if (amount === null) {
            errorMsgEl.textContent = "Please enter a valid amount.";
            errorMsgEl.classList.remove("hidden");
            return;
          }

          const r = ratePercent / 100;
          let priceBefore = 0;
          let tax = 0;
          let total = 0;

          if (mode === "fromPrice" || mode === "taxOnly") {
            priceBefore = amount;
            tax = priceBefore * r;
            total = priceBefore + tax;
          } else if (mode === "fromTotal") {
            total = amount;
            const divisor = 1 + r;
            if (divisor === 0) {
              errorMsgEl.textContent = "Tax rate cannot be -100%.";
              errorMsgEl.classList.remove("hidden");
              return;
            }
            priceBefore = total / divisor;
            tax = total - priceBefore;
          }

          // Apply rounding to monetary values if needed
          function applyRounding(val) {
            if (roundingMode === "none") return val;
            const decimals = parseInt(roundingMode, 10);
            if (isNaN(decimals)) return Math.round(val * 100) / 100;
            const factor = Math.pow(10, decimals);
            return Math.round(val * factor) / factor;
          }

          const priceRounded = applyRounding(priceBefore);
          const taxRounded = applyRounding(tax);
          const totalRounded = applyRounding(total);

          resultPriceEl.textContent = formatMoney(
            priceRounded,
            roundingMode === "none" ? "2" : roundingMode
          );
          resultTaxEl.textContent = formatMoney(
            taxRounded,
            roundingMode === "none" ? "2" : roundingMode
          );
          resultTotalEl.textContent = formatMoney(
            totalRounded,
            roundingMode === "none" ? "2" : roundingMode
          );

          const effectiveRate = priceBefore > 0 ? (tax / priceBefore) * 100 : 0;
          resultEffectiveRateEl.textContent = `Effective tax rate: ${effectiveRate.toFixed(
            3
          )}% based on your inputs.`;

          resultsCard.classList.remove("hidden");
        }

        function reset() {
          modeEl.value = "fromPrice";
          rateEl.value = "8.25";
          amountInputEl.value = "100.00";
          roundingEl.value = "2";
          updateAmountLabel();
          resultsCard.classList.add("hidden");
          errorMsgEl.classList.add("hidden");
          errorMsgEl.textContent = "";
        }

        calcBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", reset);

        amountInputEl.addEventListener("keydown", function (e) {
          if (e.key === "Enter") {
            e.preventDefault();
            calculate();
          }
        });

        // Initialize label
        updateAmountLabel();
      })();
    </script>

