    <script>
      // Helper functions
      function parsePitch(value, riseInput, runInput) {
        if (value === "custom") {
          const rise = parseFloat(riseInput.value);
          const run = parseFloat(runInput.value);
          if (!isFinite(rise) || !isFinite(run) || run <= 0) return null;
          return { rise, run };
        }
        const parts = value.split("/");
        const rise = parseFloat(parts[0]);
        const run = parseFloat(parts[1]);
        if (!isFinite(rise) || !isFinite(run) || run <= 0) return null;
        return { rise, run };
      }

      function pitchFactor(rise, run) {
        const ratio = rise / run;
        return Math.sqrt(1 + ratio * ratio);
      }

      function round(value, decimals) {
        const p = Math.pow(10, decimals);
        return Math.round(value * p) / p;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const unitImperialBtn = document.getElementById("unitImperial");
        const unitMetricBtn = document.getElementById("unitMetric");
        const lengthMain = document.getElementById("lengthMain");
        const widthMain = document.getElementById("widthMain");
        const overhang = document.getElementById("overhang");
        const ridgeLengthInput = document.getElementById("ridgeLength");
        const lengthUnitLabel = document.getElementById("lengthUnitLabel");
        const widthUnitLabel = document.getElementById("widthUnitLabel");
        const overhangUnitLabel = document.getElementById("overhangUnitLabel");
        const ridgeUnitLabel = document.getElementById("ridgeUnitLabel");
        const bundleCoverage = document.getElementById("bundleCoverage");
        const bundleCoverageUnit =
          document.getElementById("bundleCoverageUnit");
        const underlayCoverage = document.getElementById("underlayCoverage");
        const underlayCoverageUnit = document.getElementById(
          "underlayCoverageUnit"
        );

        let currentUnit = "imperial"; // 'imperial' or 'metric'

        function setUnit(unit) {
          if (unit === currentUnit) return;
          const toMetric = unit === "metric";

          // Convert length-related fields
          const fields = [lengthMain, widthMain, overhang, ridgeLengthInput];
          fields.forEach((input) => {
            if (!input.value) return;
            let v = parseFloat(input.value);
            if (!isFinite(v)) return;
            if (toMetric) {
              v = v * 0.3048; // ft -> m
            } else {
              v = v / 0.3048; // m -> ft
            }
            input.value = round(v, 3);
          });

          // Convert area coverage fields
          if (bundleCoverage.value) {
            let v = parseFloat(bundleCoverage.value);
            if (isFinite(v)) {
              if (toMetric) {
                v = v * 0.092903; // ft² -> m²
              } else {
                v = v / 0.092903; // m² -> ft²
              }
              bundleCoverage.value = round(v, 2);
            }
          }
          if (underlayCoverage.value) {
            let v = parseFloat(underlayCoverage.value);
            if (isFinite(v)) {
              if (toMetric) {
                v = v * 0.092903;
              } else {
                v = v / 0.092903;
              }
              underlayCoverage.value = round(v, 1);
            }
          }

          currentUnit = unit;
          if (unit === "imperial") {
            unitImperialBtn.classList.add("active");
            unitMetricBtn.classList.remove("active");
            lengthUnitLabel.textContent = "ft";
            widthUnitLabel.textContent = "ft";
            overhangUnitLabel.textContent = "ft";
            ridgeUnitLabel.textContent = "ft";
            bundleCoverageUnit.textContent = "ft²";
            underlayCoverageUnit.textContent = "ft²";
          } else {
            unitMetricBtn.classList.add("active");
            unitImperialBtn.classList.remove("active");
            lengthUnitLabel.textContent = "m";
            widthUnitLabel.textContent = "m";
            overhangUnitLabel.textContent = "m";
            ridgeUnitLabel.textContent = "m";
            bundleCoverageUnit.textContent = "m²";
            underlayCoverageUnit.textContent = "m²";
          }
        }

        unitImperialBtn.addEventListener("click", () => setUnit("imperial"));
        unitMetricBtn.addEventListener("click", () => setUnit("metric"));

        // Roof type buttons
        const roofTypeButtons = document.querySelectorAll(".roof-type-btn");
        let currentRoofType = "gable";
        roofTypeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            roofTypeButtons.forEach((b) => b.classList.remove("active"));
            btn.classList.add("active");
            currentRoofType = btn.getAttribute("data-roof-type");
          });
        });

        // Pitch select
        const pitchSelect = document.getElementById("pitchSelect");
        const customPitchRow = document.getElementById("customPitchRow");
        const pitchRise = document.getElementById("pitchRise");
        const pitchRun = document.getElementById("pitchRun");

        pitchSelect.addEventListener("change", () => {
          if (pitchSelect.value === "custom") {
            customPitchRow.classList.remove("hidden");
          } else {
            customPitchRow.classList.add("hidden");
          }
        });

        // Calculate
        const calcBtn = document.getElementById("calcBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorMsg = document.getElementById("errorMsg");
        const resultsSection = document.getElementById("resultsSection");

        const footprintAreaOut = document.getElementById("footprintAreaOut");
        const pitchFactorOut = document.getElementById("pitchFactorOut");
        const netAreaOut = document.getElementById("netAreaOut");
        const wasteAreaOut = document.getElementById("wasteAreaOut");
        const areaMetricOut = document.getElementById("areaMetricOut");
        const squaresOut = document.getElementById("squaresOut");
        const bundlesOut = document.getElementById("bundlesOut");
        const underlayRollsOut = document.getElementById("underlayRollsOut");
        const ridgeLengthOut = document.getElementById("ridgeLengthOut");
        const costShinglesOut = document.getElementById("costShinglesOut");
        const costUnderlayOut = document.getElementById("costUnderlayOut");
        const costRidgeOut = document.getElementById("costRidgeOut");
        const costTotalOut = document.getElementById("costTotalOut");
        const summaryRoofType = document.getElementById("summaryRoofType");
        const summaryPitch = document.getElementById("summaryPitch");
        const summarySquares = document.getElementById("summarySquares");
        const summaryBundles = document.getElementById("summaryBundles");
        const summaryUnderlay = document.getElementById("summaryUnderlay");

        function roofTypeLabel(type) {
          switch (type) {
            case "gable":
              return "Gable";
            case "hip":
              return "Hip";
            case "shed":
              return "Shed";
            case "flat":
              return "Flat / low-slope";
            default:
              return "Roof";
          }
        }

        calcBtn.addEventListener("click", () => {
          errorMsg.textContent = "";
          // Inputs
          const L = parseFloat(lengthMain.value);
          const W = parseFloat(widthMain.value);
          const OH = parseFloat(overhang.value) || 0;
          const waste =
            parseFloat(document.getElementById("wastePercent").value) || 0;
          const bundleCov = parseFloat(bundleCoverage.value);
          const underlayCov = parseFloat(underlayCoverage.value);
          const priceBundle =
            parseFloat(document.getElementById("pricePerBundle").value) || 0;
          const priceUnderlay =
            parseFloat(document.getElementById("pricePerUnderlay").value) || 0;
          const priceRidgeFt =
            parseFloat(document.getElementById("pricePerRidgeFt").value) || 0;

          if (!isFinite(L) || !isFinite(W) || L <= 0 || W <= 0) {
            errorMsg.textContent =
              "Please enter valid building length and width.";
            resultsSection.classList.add("hidden");
            return;
          }
          if (
            !isFinite(bundleCov) ||
            bundleCov <= 0 ||
            !isFinite(underlayCov) ||
            underlayCov <= 0
          ) {
            errorMsg.textContent =
              "Please enter valid coverage values for shingles and underlayment.";
            resultsSection.classList.add("hidden");
            return;
          }

          const pitch = parsePitch(pitchSelect.value, pitchRise, pitchRun);
          if (!pitch && currentRoofType !== "flat") {
            errorMsg.textContent = "Please enter a valid roof pitch.";
            resultsSection.classList.add("hidden");
            return;
          }

          // Footprint including overhangs
          const Lf = L + 2 * OH;
          const Wf = W + 2 * OH;
          let footprintArea = Lf * Wf; // in current unit²

          // Convert to ft² for core calculations
          let footprintFt2;
          if (currentUnit === "imperial") {
            footprintFt2 = footprintArea;
          } else {
            footprintFt2 = footprintArea / 0.092903;
          }

          // Pitch factor
          let pf = 1;
          if (currentRoofType !== "flat" && pitch) {
            pf = pitchFactor(pitch.rise, pitch.run);
          }

          const netAreaFt2 = footprintFt2 * pf;
          const adjAreaFt2 = netAreaFt2 * (1 + waste / 100);

          // Squares and bundles
          const squares = adjAreaFt2 / 100;
          const bundles =
            adjAreaFt2 /
            (currentUnit === "imperial" ? bundleCov : bundleCov / 0.092903);

          // Underlayment rolls
          const underlayRolls =
            adjAreaFt2 /
            (currentUnit === "imperial" ? underlayCov : underlayCov / 0.092903);

          // Ridge length (in current unit)
          let ridgeLen = parseFloat(ridgeLengthInput.value);
          if (!isFinite(ridgeLen) || ridgeLen <= 0) {
            if (currentRoofType === "gable") {
              ridgeLen = L;
            } else if (currentRoofType === "hip") {
              const est = L - 2 * W;
              ridgeLen = est > 0 ? est : 0;
            } else {
              ridgeLen = 0;
            }
          }

          // Costs (convert ridge length to ft if needed)
          let ridgeLenFt = ridgeLen;
          if (currentUnit === "metric") {
            ridgeLenFt = ridgeLen / 0.3048;
          }
          const costShingles = bundles * priceBundle;
          const costUnderlay = underlayRolls * priceUnderlay;
          const costRidge = ridgeLenFt * priceRidgeFt;
          const costTotal = costShingles + costUnderlay + costRidge;

          // Outputs
          const areaUnitLabel = currentUnit === "imperial" ? "ft²" : "m²";
          const footprintDisplay =
            currentUnit === "imperial" ? footprintFt2 : footprintFt2 * 0.092903;
          const netAreaDisplay =
            currentUnit === "imperial" ? netAreaFt2 : netAreaFt2 * 0.092903;
          const adjAreaDisplay =
            currentUnit === "imperial" ? adjAreaFt2 : adjAreaFt2 * 0.092903;

          footprintAreaOut.textContent = `${round(
            footprintDisplay,
            1
          )} ${areaUnitLabel}`;
          pitchFactorOut.textContent = round(pf, 3);
          netAreaOut.textContent = `${round(
            netAreaDisplay,
            1
          )} ${areaUnitLabel}`;
          wasteAreaOut.textContent = `${round(
            adjAreaDisplay,
            1
          )} ${areaUnitLabel} (with ${waste}% waste)`;

          const adjAreaM2 = adjAreaFt2 * 0.092903;
          areaMetricOut.textContent = `${round(adjAreaFt2, 1)} ft² ≈ ${round(
            adjAreaM2,
            1
          )} m²`;

          squaresOut.textContent = `${round(squares, 2)} squares`;
          bundlesOut.textContent = `${Math.ceil(bundles)} bundles (rounded up)`;
          underlayRollsOut.textContent = `${Math.ceil(
            underlayRolls
          )} rolls (rounded up)`;
          ridgeLengthOut.textContent = `${round(ridgeLen, 2)} ${
            currentUnit === "imperial" ? "ft" : "m"
          }`;

          costShinglesOut.textContent =
            priceBundle > 0
              ? `$${round(costShingles, 2).toLocaleString()}`
              : "–";
          costUnderlayOut.textContent =
            priceUnderlay > 0
              ? `$${round(costUnderlay, 2).toLocaleString()}`
              : "–";
          costRidgeOut.textContent =
            priceRidgeFt > 0 && ridgeLenFt > 0
              ? `$${round(costRidge, 2).toLocaleString()}`
              : "–";
          costTotalOut.textContent =
            priceBundle > 0 || priceUnderlay > 0 || priceRidgeFt > 0
              ? `$${round(costTotal, 2).toLocaleString()}`
              : "–";

          summaryRoofType.textContent = roofTypeLabel(currentRoofType);
          if (currentRoofType === "flat") {
            summaryPitch.textContent = "≈ 0/12";
          } else if (pitch) {
            summaryPitch.textContent = `${pitch.rise}/${pitch.run}`;
          } else {
            summaryPitch.textContent = "n/a";
          }
          summarySquares.textContent = `${round(squares, 2)}`;
          summaryBundles.textContent = `${Math.ceil(bundles)} bundles`;
          summaryUnderlay.textContent = `${Math.ceil(underlayRolls)} rolls`;

          resultsSection.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          lengthMain.value = 40;
          widthMain.value = 30;
          overhang.value = 1;
          document.getElementById("wastePercent").value = 10;
          bundleCoverage.value = 33.3;
          underlayCoverage.value = 200;
          ridgeLengthInput.value = "";
          document.getElementById("pricePerBundle").value = 35;
          document.getElementById("pricePerUnderlay").value = 25;
          document.getElementById("pricePerRidgeFt").value = 2.5;
          pitchSelect.value = "6/12";
          customPitchRow.classList.add("hidden");
          pitchRise.value = "";
          pitchRun.value = "";
          setUnit("imperial");
          roofTypeButtons.forEach((b) => b.classList.remove("active"));
          document
            .querySelector('.roof-type-btn[data-roof-type="gable"]')
            .classList.add("active");
          currentRoofType = "gable";
          errorMsg.textContent = "";
          resultsSection.classList.add("hidden");
        });
      });
    </script>

