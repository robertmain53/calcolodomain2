    <script>
      // Utility functions
      function round(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function formatKcal(value) {
        if (!isFinite(value)) return "–";
        return Math.round(value).toLocaleString();
      }

      function formatMass(value, unit) {
        if (!isFinite(value)) return "–";
        return round(value, 1).toLocaleString() + " " + unit;
      }

      // State
      let currentSex = "male";
      let currentUnits = "metric"; // 'metric' or 'imperial'

      // Elements
      const sexButtons = document.querySelectorAll(".sex-btn");
      const unitButtons = document.querySelectorAll(".unit-btn");
      const weightInput = document.getElementById("weight");
      const heightInput = document.getElementById("height");
      const bodyFatInput = document.getElementById("body-fat");
      const lbmInput = document.getElementById("lbm");
      const activitySelect = document.getElementById("activity");
      const ageInput = document.getElementById("age");

      const weightUnitLabel = document.getElementById("weight-unit-label");
      const heightUnitLabel = document.getElementById("height-unit-label");
      const lbmUnitLabel = document.getElementById("lbm-unit-label");

      const bmrValueEl = document.getElementById("bmr-value");
      const tdeeValueEl = document.getElementById("tdee-value");
      const lossMildEl = document.getElementById("loss-mild");
      const lossAggressiveEl = document.getElementById("loss-aggressive");
      const gainLeanEl = document.getElementById("gain-lean");
      const summaryLbmEl = document.getElementById("summary-lbm");
      const summaryFatMassEl = document.getElementById("summary-fat-mass");
      const errorBox = document.getElementById("error-box");

      const calculateBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");

      // Sex toggle
      sexButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          currentSex = btn.dataset.sex;
          sexButtons.forEach((b) => {
            const active = b.dataset.sex === currentSex;
            b.className =
              "sex-btn px-3 py-1.5 rounded border text-sm font-medium " +
              (active
                ? "border-blue-500 text-blue-600 bg-blue-50"
                : "border-gray-300 text-gray-700 bg-white");
          });
        });
      });

      // Unit toggle with conversion
      function convertToMetric() {
        const weight = parseFloat(weightInput.value);
        const height = parseFloat(heightInput.value);
        const lbm = parseFloat(lbmInput.value);

        if (isFinite(weight)) weightInput.value = round(weight / 2.20462, 1);
        if (isFinite(height)) heightInput.value = round(height * 2.54, 1);
        if (isFinite(lbm)) lbmInput.value = round(lbm / 2.20462, 1);
      }

      function convertToImperial() {
        const weight = parseFloat(weightInput.value);
        const height = parseFloat(heightInput.value);
        const lbm = parseFloat(lbmInput.value);

        if (isFinite(weight)) weightInput.value = round(weight * 2.20462, 1);
        if (isFinite(height)) heightInput.value = round(height / 2.54, 1);
        if (isFinite(lbm)) lbmInput.value = round(lbm * 2.20462, 1);
      }

      function updateUnitLabels() {
        if (currentUnits === "metric") {
          weightUnitLabel.textContent = "(kg)";
          heightUnitLabel.textContent = "(cm)";
          lbmUnitLabel.textContent = "(kg)";
        } else {
          weightUnitLabel.textContent = "(lb)";
          heightUnitLabel.textContent = "(in)";
          lbmUnitLabel.textContent = "(lb)";
        }
      }

      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const newUnits = btn.dataset.units;
          if (newUnits === currentUnits) return;

          if (newUnits === "metric") {
            convertToMetric();
          } else {
            convertToImperial();
          }
          currentUnits = newUnits;
          updateUnitLabels();

          unitButtons.forEach((b) => {
            const active = b.dataset.units === currentUnits;
            b.className =
              "unit-btn px-3 py-1.5 rounded border text-sm font-medium " +
              (active
                ? "border-blue-500 text-blue-600 bg-blue-50"
                : "border-gray-300 text-gray-700 bg-white");
          });
        });
      });

      updateUnitLabels();

      // Core calculation
      function calculateKatchMcArdle() {
        errorBox.classList.add("hidden");
        errorBox.textContent = "";

        const age = parseFloat(ageInput.value);
        const weightRaw = parseFloat(weightInput.value);
        const heightRaw = parseFloat(heightInput.value);
        const bodyFat = parseFloat(bodyFatInput.value);
        const lbmRaw = parseFloat(lbmInput.value);
        const activity = parseFloat(activitySelect.value);

        if (!isFinite(weightRaw) || weightRaw <= 0) {
          showError("Please enter a valid body weight.");
          return;
        }

        // Convert to metric for internal calculations
        const weightKg =
          currentUnits === "metric" ? weightRaw : weightRaw / 2.20462;
        const heightCm =
          currentUnits === "metric"
            ? heightRaw
            : isFinite(heightRaw)
            ? heightRaw * 2.54
            : NaN;
        let lbmKg;

        if (isFinite(bodyFat) && bodyFat > 0 && bodyFat < 80) {
          // Use body fat % to compute LBM
          const bfFraction = bodyFat / 100;
          lbmKg = weightKg * (1 - bfFraction);
          lbmInput.value =
            currentUnits === "metric"
              ? round(lbmKg, 1)
              : round(lbmKg * 2.20462, 1);
        } else if (isFinite(lbmRaw) && lbmRaw > 0) {
          // Use LBM directly
          lbmKg = currentUnits === "metric" ? lbmRaw : lbmRaw / 2.20462;
          const bfFraction = 1 - lbmKg / weightKg;
          if (bfFraction > 0 && bfFraction < 0.8) {
            bodyFatInput.value = round(bfFraction * 100, 1);
          }
        } else {
          showError(
            "Please enter either body fat percentage or lean body mass."
          );
          return;
        }

        if (!isFinite(lbmKg) || lbmKg <= 0) {
          showError(
            "Lean body mass could not be calculated. Check your inputs."
          );
          return;
        }

        // Katch-McArdle BMR
        const bmr = 370 + 21.6 * lbmKg;
        const tdee =
          bmr * (isFinite(activity) && activity > 0 ? activity : 1.2);

        // Suggested targets
        const mildLoss = tdee * 0.9;
        const aggressiveLoss = tdee * 0.8;
        const leanGain = tdee * 1.1;

        // Fat mass
        const fatMassKg = weightKg - lbmKg;

        // Update UI
        bmrValueEl.textContent = formatKcal(bmr);
        tdeeValueEl.textContent = formatKcal(tdee);
        lossMildEl.textContent = formatKcal(mildLoss);
        lossAggressiveEl.textContent = formatKcal(aggressiveLoss);
        gainLeanEl.textContent = formatKcal(leanGain);

        const massUnit = currentUnits === "metric" ? "kg" : "lb";
        const lbmDisplay = currentUnits === "metric" ? lbmKg : lbmKg * 2.20462;
        const fatDisplay =
          currentUnits === "metric" ? fatMassKg : fatMassKg * 2.20462;

        summaryLbmEl.textContent = formatMass(lbmDisplay, massUnit);
        summaryFatMassEl.textContent = formatMass(fatDisplay, massUnit);
      }

      function showError(msg) {
        errorBox.textContent = msg;
        errorBox.classList.remove("hidden");
        bmrValueEl.textContent = "–";
        tdeeValueEl.textContent = "–";
        lossMildEl.textContent = "–";
        lossAggressiveEl.textContent = "–";
        gainLeanEl.textContent = "–";
        summaryLbmEl.textContent = "–";
        summaryFatMassEl.textContent = "–";
      }

      calculateBtn.addEventListener("click", calculateKatchMcArdle);

      resetBtn.addEventListener("click", () => {
        currentSex = "male";
        currentUnits = "metric";
        ageInput.value = 30;
        weightInput.value = 70;
        heightInput.value = 175;
        bodyFatInput.value = "";
        lbmInput.value = "";
        activitySelect.value = "1.55";
        updateUnitLabels();

        sexButtons.forEach((b) => {
          const active = b.dataset.sex === currentSex;
          b.className =
            "sex-btn px-3 py-1.5 rounded border text-sm font-medium " +
            (active
              ? "border-blue-500 text-blue-600 bg-blue-50"
              : "border-gray-300 text-gray-700 bg-white");
        });

        unitButtons.forEach((b) => {
          const active = b.dataset.units === currentUnits;
          b.className =
            "unit-btn px-3 py-1.5 rounded border text-sm font-medium " +
            (active
              ? "border-blue-500 text-blue-600 bg-blue-50"
              : "border-gray-300 text-gray-700 bg-white");
        });

        errorBox.classList.add("hidden");
        errorBox.textContent = "";
        bmrValueEl.textContent = "–";
        tdeeValueEl.textContent = "–";
        lossMildEl.textContent = "–";
        lossAggressiveEl.textContent = "–";
        gainLeanEl.textContent = "–";
        summaryLbmEl.textContent = "–";
        summaryFatMassEl.textContent = "–";
      });

      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.nextElementSibling;
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden");
            symbol.textContent = isHidden ? "−" : "+";
          });
        });

      // Initial auto-calc with defaults
      calculateKatchMcArdle();
    </script>

