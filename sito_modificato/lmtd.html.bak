    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const expanded = this.getAttribute("aria-expanded") === "true";
          this.setAttribute("aria-expanded", String(!expanded));
          menu.classList.toggle("hidden");
        });

      // Helper: unit conversions
      function FtoC(F) {
        return ((F - 32) * 5) / 9;
      }
      function KtoC(K) {
        return K - 273.15;
      }

      function U_to_SI(value, unit) {
        if (!isFinite(value)) return NaN;
        if (unit === "Wm2K") return value;
        if (unit === "BTUhrft2F") {
          // 1 BTU/hr·ft²·°F ≈ 5.678263 W/m²·K
          return value * 5.678263;
        }
        return NaN;
      }

      function area_to_SI(value, unit) {
        if (!isFinite(value)) return NaN;
        if (unit === "m2") return value;
        if (unit === "ft2") return value * 0.09290304;
        return NaN;
      }

      function Q_to_SI(value, unit) {
        if (!isFinite(value)) return NaN;
        if (unit === "W") return value;
        if (unit === "kW") return value * 1000;
        if (unit === "BTUhr") return value * 0.29307107; // 1 BTU/hr ≈ 0.29307107 W
        return NaN;
      }

      function Q_from_SI(W, unit) {
        if (!isFinite(W)) return NaN;
        if (unit === "W") return W;
        if (unit === "kW") return W / 1000;
        if (unit === "BTUhr") return W / 0.29307107;
        return NaN;
      }

      function area_from_SI(m2, unit) {
        if (!isFinite(m2)) return NaN;
        if (unit === "m2") return m2;
        if (unit === "ft2") return m2 / 0.09290304;
        return NaN;
      }

      function U_from_SI(U, unit) {
        if (!isFinite(U)) return NaN;
        if (unit === "Wm2K") return U;
        if (unit === "BTUhrft2F") return U / 5.678263;
        return NaN;
      }

      // LMTD calculation
      function calcLMTD(dt1, dt2) {
        if (dt1 <= 0 || dt2 <= 0) return NaN;
        const diff = Math.abs(dt1 - dt2);
        const avg = (dt1 + dt2) / 2;
        if (diff / avg < 1e-3) {
          return avg; // nearly equal, use arithmetic mean
        }
        return (dt1 - dt2) / Math.log(dt1 / dt2);
      }

      function estimateF(flowType) {
        if (flowType === "cross-est") {
          // Simple heuristic typical values
          return 0.85;
        }
        return 1.0;
      }

      // UI logic
      const tabLmtd = document.getElementById("tab-lmtd");
      const tabQ = document.getElementById("tab-q");
      const tabArea = document.getElementById("tab-area");
      const sectionQ = document.getElementById("section-q");
      const sectionArea = document.getElementById("section-area");
      const sectionF = document.getElementById("section-f");
      const flowTypeSelect = document.getElementById("flow-type");
      const errorBox = document.getElementById("error-box");
      const resultsBox = document.getElementById("results");

      function setMode(mode) {
        tabLmtd.classList.remove("tab-active");
        tabQ.classList.remove("tab-active");
        tabArea.classList.remove("tab-active");
        sectionQ.classList.add("hidden");
        sectionArea.classList.add("hidden");

        if (mode === "lmtd") {
          tabLmtd.classList.add("tab-active");
        } else if (mode === "q") {
          tabQ.classList.add("tab-active");
          sectionQ.classList.remove("hidden");
        } else if (mode === "area") {
          tabArea.classList.add("tab-active");
          sectionArea.classList.remove("hidden");
        }
      }

      tabLmtd.addEventListener("click", () => setMode("lmtd"));
      tabQ.addEventListener("click", () => setMode("q"));
      tabArea.addEventListener("click", () => setMode("area"));

      flowTypeSelect.addEventListener("change", () => {
        if (flowTypeSelect.value === "customF") {
          sectionF.classList.remove("hidden");
        } else {
          sectionF.classList.add("hidden");
        }
      });

      document.getElementById("btn-reset").addEventListener("click", () => {
        [
          "th_in",
          "th_out",
          "tc_in",
          "tc_out",
          "u_value",
          "area_value",
          "u_value_area",
          "q_value",
          "f_value",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) el.value = "";
        });
        document.getElementById("temp-unit").value = "C";
        document.getElementById("u-unit").value = "Wm2K";
        document.getElementById("area-unit").value = "m2";
        document.getElementById("u-area-unit").value = "Wm2K";
        document.getElementById("q-unit").value = "W";
        flowTypeSelect.value = "counter";
        sectionF.classList.add("hidden");
        errorBox.classList.add("hidden");
        resultsBox.classList.add("hidden");
      });

      document.getElementById("btn-swap").addEventListener("click", () => {
        const th_in = document.getElementById("th_in");
        const th_out = document.getElementById("th_out");
        const tc_in = document.getElementById("tc_in");
        const tc_out = document.getElementById("tc_out");
        const tmpIn = th_in.value;
        const tmpOut = th_out.value;
        th_in.value = tc_in.value;
        th_out.value = tc_out.value;
        tc_in.value = tmpIn;
        tc_out.value = tmpOut;
      });

      document.getElementById("btn-calc").addEventListener("click", () => {
        errorBox.classList.add("hidden");
        errorBox.textContent = "";
        resultsBox.classList.add("hidden");

        const mode = tabQ.classList.contains("tab-active")
          ? "q"
          : tabArea.classList.contains("tab-active")
          ? "area"
          : "lmtd";

        const Th_in_raw = parseFloat(document.getElementById("th_in").value);
        const Th_out_raw = parseFloat(document.getElementById("th_out").value);
        const Tc_in_raw = parseFloat(document.getElementById("tc_in").value);
        const Tc_out_raw = parseFloat(document.getElementById("tc_out").value);
        const tempUnit = document.getElementById("temp-unit").value;

        if (
          ![Th_in_raw, Th_out_raw, Tc_in_raw, Tc_out_raw].every((v) =>
            isFinite(v)
          )
        ) {
          errorBox.textContent =
            "Please enter all four inlet and outlet temperatures.";
          errorBox.classList.remove("hidden");
          return;
        }

        // Convert to °C for internal consistency
        let Th_in, Th_out, Tc_in, Tc_out;
        if (tempUnit === "C") {
          Th_in = Th_in_raw;
          Th_out = Th_out_raw;
          Tc_in = Tc_in_raw;
          Tc_out = Tc_out_raw;
        } else if (tempUnit === "F") {
          Th_in = FtoC(Th_in_raw);
          Th_out = FtoC(Th_out_raw);
          Tc_in = FtoC(Tc_in_raw);
          Tc_out = FtoC(Tc_out_raw);
        } else if (tempUnit === "K") {
          Th_in = KtoC(Th_in_raw);
          Th_out = KtoC(Th_out_raw);
          Tc_in = KtoC(Tc_in_raw);
          Tc_out = KtoC(Tc_out_raw);
        }

        const dt1 = Th_in - Tc_out;
        const dt2 = Th_out - Tc_in;

        if (dt1 <= 0 || dt2 <= 0) {
          errorBox.textContent =
            "Inconsistent temperatures: both ΔT₁ and ΔT₂ must be positive. Check which stream is hot and which is cold.";
          errorBox.classList.remove("hidden");
          return;
        }

        const lmtd = calcLMTD(dt1, dt2);
        if (!isFinite(lmtd) || lmtd <= 0) {
          errorBox.textContent =
            "Unable to compute a valid LMTD. Check that ΔT₁ and ΔT₂ are positive and not zero.";
          errorBox.classList.remove("hidden");
          return;
        }

        const flowType = flowTypeSelect.value;
        let F;
        if (flowType === "customF") {
          F = parseFloat(document.getElementById("f_value").value);
          if (!isFinite(F) || F <= 0 || F > 1.5) {
            errorBox.textContent =
              "Please enter a realistic correction factor F between 0 and 1.5.";
            errorBox.classList.remove("hidden");
            return;
          }
        } else {
          F = estimateF(flowType);
        }

        let Q_SI = NaN;
        let A_SI = NaN;
        let U_SI = NaN;
        let note = "";

        if (mode === "q") {
          const U_raw = parseFloat(document.getElementById("u_value").value);
          const U_unit = document.getElementById("u-unit").value;
          const A_raw = parseFloat(document.getElementById("area_value").value);
          const A_unit = document.getElementById("area-unit").value;

          if (!isFinite(U_raw) || !isFinite(A_raw)) {
            errorBox.textContent =
              "Please enter both overall heat transfer coefficient U and area A.";
            errorBox.classList.remove("hidden");
            return;
          }

          U_SI = U_to_SI(U_raw, U_unit);
          A_SI = area_to_SI(A_raw, A_unit);
          if (!isFinite(U_SI) || !isFinite(A_SI)) {
            errorBox.textContent = "Invalid units for U or A.";
            errorBox.classList.remove("hidden");
            return;
          }

          Q_SI = U_SI * A_SI * F * lmtd;
          note = "Heat duty Q computed from specified U and A.";
        } else if (mode === "area") {
          const U_raw = parseFloat(
            document.getElementById("u_value_area").value
          );
          const U_unit = document.getElementById("u-area-unit").value;
          const Q_raw = parseFloat(document.getElementById("q_value").value);
          const Q_unit = document.getElementById("q-unit").value;

          if (!isFinite(U_raw) || !isFinite(Q_raw)) {
            errorBox.textContent =
              "Please enter both overall heat transfer coefficient U and heat duty Q.";
            errorBox.classList.remove("hidden");
            return;
          }

          U_SI = U_to_SI(U_raw, U_unit);
          Q_SI = Q_to_SI(Q_raw, Q_unit);
          if (!isFinite(U_SI) || !isFinite(Q_SI)) {
            errorBox.textContent = "Invalid units for U or Q.";
            errorBox.classList.remove("hidden");
            return;
          }

          A_SI = Q_SI / (U_SI * F * lmtd);
          note = "Required area A computed from specified U and Q.";
        } else {
          note =
            "Only LMTD and effective ΔT were computed. Use modes 2 or 3 to calculate Q or A.";
        }

        // Populate results
        document.getElementById("res-dt1").textContent = dt1.toFixed(2) + " K";
        document.getElementById("res-dt2").textContent = dt2.toFixed(2) + " K";
        document.getElementById("res-lmtd").textContent =
          lmtd.toFixed(2) + " K";
        document.getElementById("res-effdt").textContent =
          (F * lmtd).toFixed(2) + " K";
        document.getElementById("res-f").textContent = F.toFixed(3);

        if (isFinite(Q_SI)) {
          const qUnitOut = document.getElementById("q-unit").value;
          const Q_out = Q_from_SI(Q_SI, qUnitOut);
          document.getElementById("res-q").textContent =
            Q_out.toExponential(3) + " " + qUnitOut;
        } else {
          document.getElementById("res-q").textContent = "–";
        }

        if (isFinite(A_SI)) {
          const aUnitOut = document.getElementById("area-unit").value;
          const A_out = area_from_SI(A_SI, aUnitOut);
          document.getElementById("res-area").textContent =
            A_out.toFixed(3) + " " + aUnitOut;
        } else {
          document.getElementById("res-area").textContent = "–";
        }

        if (isFinite(U_SI)) {
          const uUnitOut =
            mode === "q"
              ? document.getElementById("u-unit").value
              : document.getElementById("u-area-unit").value;
          const U_out = U_from_SI(U_SI, uUnitOut);
          document.getElementById("res-u").textContent =
            U_out.toFixed(1) +
            " " +
            (uUnitOut === "Wm2K" ? "W/m²·K" : "BTU/hr·ft²·°F");
        } else {
          document.getElementById("res-u").textContent = "–";
        }

        document.getElementById("res-note").textContent = note;
        resultsBox.classList.remove("hidden");
      });

