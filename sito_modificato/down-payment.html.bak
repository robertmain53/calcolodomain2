    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatCurrencyMonthly(value) {
        if (!isFinite(value)) return "$0/mo";
        return (
          "$" +
          value.toLocaleString(undefined, { maximumFractionDigits: 0 }) +
          "/mo"
        );
      }

      function calculatePI(loanAmount, annualRate, years) {
        const n = years * 12;
        if (loanAmount <= 0 || annualRate <= 0 || n <= 0) return 0;
        const r = annualRate / 100 / 12;
        const factor = Math.pow(1 + r, n);
        return (loanAmount * (r * factor)) / (factor - 1);
      }

      function updateCalculator(fromField) {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        let dpPercent =
          parseFloat(document.getElementById("downPaymentPercent").value) || 0;
        let dpAmount =
          parseFloat(document.getElementById("downPaymentAmount").value) || 0;
        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const termYears =
          parseInt(document.getElementById("loanTerm").value, 10) || 30;
        const pmiRate =
          parseFloat(document.getElementById("pmiRate").value) || 0;
        const taxRate =
          parseFloat(document.getElementById("propertyTaxRate").value) || 0;
        const insuranceAnnual =
          parseFloat(document.getElementById("homeInsurance").value) || 0;

        if (homePrice <= 0) {
          return;
        }

        // Sync percent and amount
        if (fromField === "percent") {
          dpPercent = Math.min(Math.max(dpPercent, 0), 100);
          dpAmount = homePrice * (dpPercent / 100);
          document.getElementById("downPaymentAmount").value =
            Math.round(dpAmount);
        } else if (fromField === "amount") {
          dpAmount = Math.min(Math.max(dpAmount, 0), homePrice);
          dpPercent = homePrice > 0 ? (dpAmount / homePrice) * 100 : 0;
          document.getElementById("downPaymentPercent").value =
            dpPercent.toFixed(1);
        } else if (fromField === "price") {
          // Recalculate amount from percent when price changes
          dpAmount = homePrice * (dpPercent / 100);
          document.getElementById("downPaymentAmount").value =
            Math.round(dpAmount);
        }

        const loanAmount = Math.max(homePrice - dpAmount, 0);
        const ltv = homePrice > 0 ? (loanAmount / homePrice) * 100 : 0;

        const monthlyPI = calculatePI(loanAmount, rate, termYears);
        const monthlyTax = (homePrice * (taxRate / 100)) / 12;
        const monthlyIns = insuranceAnnual / 12;

        let monthlyPMI = 0;
        let pmiRequired = false;
        if (ltv > 80 && loanAmount > 0 && pmiRate > 0) {
          pmiRequired = true;
          monthlyPMI = ((pmiRate / 100) * loanAmount) / 12;
        }

        const totalMonthly = monthlyPI + monthlyTax + monthlyIns + monthlyPMI;
        const totalInterest = monthlyPI * termYears * 12 - loanAmount;

        // Update summary
        document.getElementById("summaryDownPayment").textContent =
          formatCurrency(dpAmount) +
          " (" +
          dpPercent.toFixed(1).replace(/\.0$/, "") +
          "%)";
        document.getElementById("summaryLoanAmount").textContent =
          formatCurrency(loanAmount);
        document.getElementById("summaryPI").textContent =
          formatCurrencyMonthly(monthlyPI);
        document.getElementById("summaryTax").textContent =
          formatCurrencyMonthly(monthlyTax);
        document.getElementById("summaryIns").textContent =
          formatCurrencyMonthly(monthlyIns);
        document.getElementById("summaryPMI").textContent =
          formatCurrencyMonthly(monthlyPMI);
        document.getElementById("summaryTotal").textContent =
          formatCurrencyMonthly(totalMonthly);
        document.getElementById("summaryInterest").textContent =
          formatCurrency(totalInterest);
        document.getElementById("summaryLTV").textContent =
          ltv.toFixed(1).replace(/\.0$/, "") + "%";
        document.getElementById("summaryPMIFlag").textContent = pmiRequired
          ? "Likely (down < 20%)"
          : "No (≥ 20% down)";

        // Update comparison slider baseline (home price, rate, term, taxes, insurance)
        updateComparisonSlider();
      }

      function updateComparisonSlider() {
        const homePrice =
          parseFloat(document.getElementById("homePrice").value) || 0;
        const rate =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const termYears =
          parseInt(document.getElementById("loanTerm").value, 10) || 30;
        const pmiRate =
          parseFloat(document.getElementById("pmiRate").value) || 0;
        const taxRate =
          parseFloat(document.getElementById("propertyTaxRate").value) || 0;
        const insuranceAnnual =
          parseFloat(document.getElementById("homeInsurance").value) || 0;
        const slider = document.getElementById("compareRange");
        const pct = parseInt(slider.value, 10) || 0;

        if (homePrice <= 0) return;

        const dpAmount = homePrice * (pct / 100);
        const loanAmount = Math.max(homePrice - dpAmount, 0);
        const ltv = homePrice > 0 ? (loanAmount / homePrice) * 100 : 0;

        const monthlyPI = calculatePI(loanAmount, rate, termYears);
        const monthlyTax = (homePrice * (taxRate / 100)) / 12;
        const monthlyIns = insuranceAnnual / 12;

        let monthlyPMI = 0;
        if (ltv > 80 && loanAmount > 0 && pmiRate > 0) {
          monthlyPMI = ((pmiRate / 100) * loanAmount) / 12;
        }

        const totalMonthly = monthlyPI + monthlyTax + monthlyIns + monthlyPMI;

        document.getElementById("compareRangeValue").textContent = pct + "%";
        document.getElementById("compareDP").textContent =
          formatCurrency(dpAmount);
        document.getElementById("compareLoan").textContent =
          formatCurrency(loanAmount);
        document.getElementById("comparePI").textContent =
          formatCurrencyMonthly(monthlyPI);
        document.getElementById("comparePMI").textContent =
          formatCurrencyMonthly(monthlyPMI);
        document.getElementById("compareTotal").textContent =
          formatCurrencyMonthly(totalMonthly);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const homePriceEl = document.getElementById("homePrice");
        const dpPercentEl = document.getElementById("downPaymentPercent");
        const dpAmountEl = document.getElementById("downPaymentAmount");
        const rateEl = document.getElementById("interestRate");
        const termEl = document.getElementById("loanTerm");
        const pmiRateEl = document.getElementById("pmiRate");
        const taxRateEl = document.getElementById("propertyTaxRate");
        const insEl = document.getElementById("homeInsurance");
        const compareRangeEl = document.getElementById("compareRange");
        const resetBtn = document.getElementById("resetBtn");

        homePriceEl.addEventListener("input", function () {
          updateCalculator("price");
        });
        dpPercentEl.addEventListener("input", function () {
          updateCalculator("percent");
        });
        dpAmountEl.addEventListener("input", function () {
          updateCalculator("amount");
        });
        rateEl.addEventListener("input", function () {
          updateCalculator();
        });
        termEl.addEventListener("change", function () {
          updateCalculator();
        });
        pmiRateEl.addEventListener("input", function () {
          updateCalculator();
        });
        taxRateEl.addEventListener("input", function () {
          updateCalculator();
        });
        insEl.addEventListener("input", function () {
          updateCalculator();
        });

        document.querySelectorAll(".dp-preset-btn").forEach(function (btn) {
          btn.addEventListener("click", function () {
            const pct = parseFloat(btn.getAttribute("data-dp-preset")) || 0;
            dpPercentEl.value = pct.toFixed(1).replace(/\.0$/, "");
            updateCalculator("percent");
          });
        });

        compareRangeEl.addEventListener("input", updateComparisonSlider);

        resetBtn.addEventListener("click", function () {
          homePriceEl.value = 400000;
          dpPercentEl.value = 20;
          dpAmountEl.value = 80000;
          rateEl.value = 6.5;
          termEl.value = 30;
          pmiRateEl.value = 0.7;
          taxRateEl.value = 1.2;
          insEl.value = 1500;
          compareRangeEl.value = 20;
          updateCalculator("percent");
        });

        // Initial calculation
        updateCalculator("percent");
      });
    </script>

