    <script>
      // Utility: format bytes to human-readable string
      function formatBytes(bytes) {
        if (!isFinite(bytes) || bytes <= 0) return "0 B";
        const units = ["B", "KB", "MB", "GB", "TB", "PB"];
        const i = Math.floor(Math.log(bytes) / Math.log(1024));
        const value = bytes / Math.pow(1024, i);
        return (
          value.toFixed(value >= 100 ? 0 : value >= 10 ? 1 : 2) + " " + units[i]
        );
      }

      function parseNumber(val) {
        if (typeof val === "number") return val;
        if (!val) return 0;
        const n = parseFloat(String(val).replace(/,/g, ""));
        return isNaN(n) ? 0 : n;
      }

      const tablesBody = document.getElementById("tables-body");
      const perTableBody = document.getElementById("per-table-breakdown");

      function createTableRow(data = {}) {
        const tr = document.createElement("tr");

        tr.innerHTML = `
      <td><input type="text" class="tbl-name w-full border-gray-300 rounded-md px-1 py-0.5 text-xs" placeholder="e.g. Orders" value="${
        data.name || ""
      }"></td>
      <td><input type="number" min="0" class="tbl-rows w-full border-gray-300 rounded-md px-1 py-0.5 text-xs" value="${
        data.rows || 0
      }"></td>
      <td><input type="number" min="1" class="tbl-row-size w-full border-gray-300 rounded-md px-1 py-0.5 text-xs" value="${
        data.rowSize || 100
      }"></td>
      <td><input type="number" min="0" class="tbl-growth w-full border-gray-300 rounded-md px-1 py-0.5 text-xs" value="${
        data.growth || 0
      }"></td>
      <td class="text-center">
        <input type="checkbox" class="tbl-include" ${
          data.include === false ? "" : "checked"
        }>
      </td>
      <td class="text-right text-gray-700 tbl-data-now">–</td>
      <td class="text-right text-gray-700 tbl-data-future">–</td>
      <td class="text-center">
        <button type="button" class="remove-row text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;

        tr.querySelector(".remove-row").addEventListener("click", () => {
          tr.remove();
          calculateSizing();
        });

        ["tbl-rows", "tbl-row-size", "tbl-growth"].forEach((cls) => {
          tr.querySelector("." + cls).addEventListener(
            "input",
            calculateSizing
          );
        });
        tr.querySelector(".tbl-include").addEventListener(
          "change",
          calculateSizing
        );

        tablesBody.appendChild(tr);
      }

      function loadSampleSchema() {
        tablesBody.innerHTML = "";
        const sample = [
          { name: "Users", rows: 50000, rowSize: 300, growth: 10000 },
          { name: "Orders", rows: 200000, rowSize: 400, growth: 80000 },
          { name: "OrderItems", rows: 800000, rowSize: 200, growth: 320000 },
          { name: "EventsLog", rows: 5000000, rowSize: 150, growth: 5000000 },
        ];
        sample.forEach(createTableRow);
        calculateSizing();
      }

      function applyPreset(type) {
        const indexOverhead = document.getElementById("index-overhead");
        const logFactor = document.getElementById("log-factor");
        const compression = document.getElementById("compression-factor");
        const safety = document.getElementById("safety-margin");

        if (type === "oltp") {
          indexOverhead.value = 80;
          logFactor.value = 0.4;
          compression.value = 0.8;
          safety.value = 30;
        } else if (type === "dwh") {
          indexOverhead.value = 40;
          logFactor.value = 0.2;
          compression.value = 0.5;
          safety.value = 40;
        } else if (type === "logging") {
          indexOverhead.value = 25;
          logFactor.value = 0.6;
          compression.value = 0.6;
          safety.value = 50;
        }
        calculateSizing();
      }

      function calculateSizing() {
        const years =
          parseNumber(document.getElementById("planning-years").value) || 1;
        const indexPct =
          parseNumber(document.getElementById("index-overhead").value) || 0;
        const logFactor =
          parseNumber(document.getElementById("log-factor").value) || 0;
        const retentionDays =
          parseNumber(document.getElementById("backup-retention").value) || 0;
        const compression =
          parseNumber(document.getElementById("compression-factor").value) || 1;
        const safetyPct =
          parseNumber(document.getElementById("safety-margin").value) || 0;

        document.getElementById("horizon-label").textContent = years.toString();

        let totalDataNow = 0;
        let totalDataFuture = 0;

        perTableBody.innerHTML = "";

        Array.from(tablesBody.querySelectorAll("tr")).forEach((tr) => {
          const include = tr.querySelector(".tbl-include").checked;
          const rowsNow = parseNumber(tr.querySelector(".tbl-rows").value);
          const rowSize = parseNumber(tr.querySelector(".tbl-row-size").value);
          const growth = parseNumber(tr.querySelector(".tbl-growth").value);
          const name = tr.querySelector(".tbl-name").value || "(unnamed)";

          const dataNow = rowsNow * rowSize;
          const rowsFuture = rowsNow + growth * years;
          const dataFuture = rowsFuture * rowSize;

          tr.querySelector(".tbl-data-now").textContent = include
            ? formatBytes(dataNow)
            : "–";
          tr.querySelector(".tbl-data-future").textContent = include
            ? formatBytes(dataFuture)
            : "–";

          if (include) {
            totalDataNow += dataNow;
            totalDataFuture += dataFuture;

            const row = document.createElement("tr");
            row.innerHTML = `
          <td>${name}</td>
          <td class="text-right">${rowsNow.toLocaleString()}</td>
          <td class="text-right">${rowsFuture.toLocaleString()}</td>
          <td class="text-right">${formatBytes(dataNow)}</td>
          <td class="text-right">${formatBytes(dataFuture)}</td>
          <td class="text-right">${formatBytes((dataNow * indexPct) / 100)}</td>
          <td class="text-right">${formatBytes(
            (dataFuture * indexPct) / 100
          )}</td>
        `;
            perTableBody.appendChild(row);
          }
        });

        // Current
        const indexNow = (totalDataNow * indexPct) / 100;
        const logNow = totalDataNow * logFactor;
        const dbNow = totalDataNow + indexNow + logNow;
        const backupPerFullNow = dbNow * compression;
        const backupsNow =
          retentionDays > 0 ? backupPerFullNow * (retentionDays / 1) : 0; // 1 full/day

        const totalNow = dbNow + backupsNow;
        const totalNowWithMargin = totalNow * (1 + safetyPct / 100);

        document.getElementById("current-data").textContent =
          formatBytes(totalDataNow);
        document.getElementById("current-index").textContent =
          formatBytes(indexNow);
        document.getElementById("current-log").textContent =
          formatBytes(logNow);
        document.getElementById("current-backup").textContent =
          formatBytes(backupsNow);
        document.getElementById("current-total").textContent =
          formatBytes(totalNowWithMargin);

        // Future
        const indexFuture = (totalDataFuture * indexPct) / 100;
        const logFuture = totalDataFuture * logFactor;
        const dbFuture = totalDataFuture + indexFuture + logFuture;
        const backupPerFullFuture = dbFuture * compression;
        const backupsFuture =
          retentionDays > 0 ? backupPerFullFuture * (retentionDays / 1) : 0;

        const totalFuture = dbFuture + backupsFuture;
        const totalFutureWithMargin = totalFuture * (1 + safetyPct / 100);

        document.getElementById("future-data").textContent =
          formatBytes(totalDataFuture);
        document.getElementById("future-index").textContent =
          formatBytes(indexFuture);
        document.getElementById("future-log").textContent =
          formatBytes(logFuture);
        document.getElementById("future-backup").textContent =
          formatBytes(backupsFuture);
        document.getElementById("future-total").textContent = formatBytes(
          totalFutureWithMargin
        );
      }

      document.getElementById("add-table-row").addEventListener("click", () => {
        createTableRow();
      });

      document
        .getElementById("load-sample-schema")
        .addEventListener("click", loadSampleSchema);
      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateSizing);

      [
        "planning-years",
        "index-overhead",
        "log-factor",
        "backup-retention",
        "compression-factor",
        "safety-margin",
      ].forEach((id) => {
        document.getElementById(id).addEventListener("input", calculateSizing);
      });

      document.querySelectorAll(".preset-btn").forEach((btn) => {
        btn.addEventListener("click", () => applyPreset(btn.dataset.preset));
      });

      // Initialize with a couple of empty rows
      createTableRow({
        name: "MainTable",
        rows: 100000,
        rowSize: 300,
        growth: 20000,
      });
      createTableRow();
      calculateSizing;
      window.addEventListener("load", calculateSizing);

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

