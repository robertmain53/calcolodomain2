    <script>
      // State
      let items = [];

      const sexEl = document.getElementById("sex");
      const caloriesEl = document.getElementById("calories");
      const totalGramsEl = document.getElementById("total-grams");
      const totalKcalEl = document.getElementById("total-kcal");
      const percentEnergyEl = document.getElementById("percent-energy");
      const who10El = document.getElementById("who-10-g");
      const who5El = document.getElementById("who-5-g");
      const ahaEl = document.getElementById("aha-g");
      const ahaLabelEl = document.getElementById("aha-label");
      const statusBadgeEl = document.getElementById("status-badge");
      const statusTextEl = document.getElementById("status-text");
      const itemsBodyEl = document.getElementById("items-body");
      const noItemsRowEl = document.getElementById("no-items-row");

      function formatNumber(n, decimals = 0) {
        return Number.isFinite(n) ? n.toFixed(decimals) : "0";
      }

      function getAhaLimit(sex) {
        if (sex === "male") return 36; // g/day
        if (sex === "female") return 25;
        return 25; // children default
      }

      function recalc() {
        const kcal = parseFloat(caloriesEl.value) || 0;
        const totalG = items.reduce((sum, it) => sum + it.totalG, 0);
        const totalKcal = totalG * 4;
        const pctEnergy = kcal > 0 ? (totalKcal / kcal) * 100 : 0;

        totalGramsEl.textContent = formatNumber(totalG, 1);
        totalKcalEl.textContent = formatNumber(totalKcal, 0);
        percentEnergyEl.textContent = formatNumber(pctEnergy, 1);

        // WHO limits
        const who10g = kcal > 0 ? (0.1 * kcal) / 4 : 0;
        const who5g = kcal > 0 ? (0.05 * kcal) / 4 : 0;
        who10El.textContent = formatNumber(who10g, 0);
        who5El.textContent = formatNumber(who5g, 0);

        // AHA limit
        const sex = sexEl.value;
        const ahaLimit = getAhaLimit(sex);
        ahaEl.textContent = formatNumber(ahaLimit, 0);
        ahaLabelEl.textContent =
          sex === "male" ? "Men" : sex === "female" ? "Women" : "Children";

        // Status
        let status = "";
        let badgeClass = "bg-green-100 text-green-800";
        if (totalG === 0) {
          status = "Within guideline (0 g)";
          badgeClass = "bg-gray-100 text-gray-700";
          statusTextEl.textContent =
            "Add some foods to see how your intake compares to recommended limits.";
        } else if (totalG <= who5g && totalG <= ahaLimit) {
          status = "Well within guideline";
          statusTextEl.textContent =
            "Your added sugar intake is below the stricter WHO 5% target and below the AHA limit.";
        } else if (totalG <= who10g && totalG <= ahaLimit) {
          status = "Within general guideline";
          badgeClass = "bg-yellow-100 text-yellow-800";
          statusTextEl.textContent =
            "Your intake is below the WHO 10% limit and AHA upper limit. You could still benefit from small reductions.";
        } else if (totalG > who10g) {
          status = "Above WHO 10% limit";
          badgeClass = "bg-red-100 text-red-800";
          statusTextEl.textContent =
            "Your added sugar intake is above the WHO 10% limit. Consider reducing sugary drinks and sweets.";
        } else if (totalG > ahaLimit) {
          status = "Above AHA limit";
          badgeClass = "bg-red-100 text-red-800";
          statusTextEl.textContent =
            "Your intake exceeds the AHA daily limit. Cutting back on added sugars can support heart health.";
        }

        statusBadgeEl.textContent = status;
        statusBadgeEl.className =
          "inline-flex items-center px-2 py-1 rounded-full text-xs font-semibold " +
          badgeClass;
      }

      function renderItems() {
        itemsBodyEl.innerHTML = "";
        if (items.length === 0) {
          itemsBodyEl.appendChild(noItemsRowEl);
          noItemsRowEl.classList.remove("hidden");
          recalc();
          return;
        }
        noItemsRowEl.classList.add("hidden");

        items.forEach((item, index) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 text-sm text-gray-800">${item.name}</td>
        <td class="px-3 py-2 text-sm text-right">${formatNumber(
          item.servings,
          2
        )}</td>
        <td class="px-3 py-2 text-sm text-right">${formatNumber(
          item.gPerServing,
          1
        )}</td>
        <td class="px-3 py-2 text-sm text-right font-medium">${formatNumber(
          item.totalG,
          1
        )}</td>
        <td class="px-3 py-2 text-center">
          <button type="button" data-index="${index}" class="remove-item text-xs text-red-600 hover:underline">Remove</button>
        </td>
      `;
          itemsBodyEl.appendChild(tr);
        });
        recalc();
      }

      document.getElementById("add-item").addEventListener("click", () => {
        const name = (
          document.getElementById("item-name").value || "Food / drink"
        ).trim();
        const servings = parseFloat(
          document.getElementById("item-servings").value
        );
        const gPerServing = parseFloat(
          document.getElementById("item-sugar").value
        );

        if (
          !Number.isFinite(servings) ||
          servings <= 0 ||
          !Number.isFinite(gPerServing) ||
          gPerServing < 0
        ) {
          alert(
            "Please enter a valid number of servings and grams of added sugar per serving."
          );
          return;
        }

        items.push({
          name,
          servings,
          gPerServing,
          totalG: servings * gPerServing,
        });

        renderItems();
      });

      itemsBodyEl.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-item")) {
          const idx = parseInt(e.target.getAttribute("data-index"), 10);
          if (!Number.isNaN(idx)) {
            items.splice(idx, 1);
            renderItems();
          }
        }
      });

      document
        .getElementById("reset-calculator")
        .addEventListener("click", () => {
          items = [];
          document.getElementById("item-name").value = "";
          document.getElementById("item-servings").value = "1";
          document.getElementById("item-sugar").value = "10";
          sexEl.value = "female";
          caloriesEl.value = "2000";
          renderItems();
        });

      sexEl.addEventListener("change", recalc);
      caloriesEl.addEventListener("input", recalc);

      // Preset panel toggle
      const presetPanel = document.getElementById("preset-panel");
      document
        .getElementById("add-from-preset")
        .addEventListener("click", () => {
          presetPanel.classList.toggle("hidden");
        });

      // Preset buttons
      presetPanel.addEventListener("click", (e) => {
        if (e.target.classList.contains("preset-btn")) {
          const name = e.target.getAttribute("data-name");
          const sugar = parseFloat(e.target.getAttribute("data-sugar")) || 0;
          document.getElementById("item-name").value = name;
          document.getElementById("item-servings").value = "1";
          document.getElementById("item-sugar").value = sugar.toString();
        }
      });

      // Initial render
      renderItems();
    </script>

