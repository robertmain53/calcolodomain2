    <script>
      // --- Utility functions ---
      function formatCurrency(value) {
        if (isNaN(value)) return "–";
        return new Intl.NumberFormat("de-DE", {
          style: "currency",
          currency: "EUR",
          maximumFractionDigits: 2,
        }).format(value);
      }

      function formatPercent(value) {
        if (isNaN(value)) return "–";
        return value.toFixed(2) + " %";
      }

      // Simplified German income tax estimator (approximate, for recent years)
      function estimateGermanIncomeTax(income, status) {
        if (income <= 0) return 0;

        // Basic allowance (Grundfreibetrag) – rough average for 2023–2025
        const basicAllowanceSingle = 11000;
        const basicAllowanceMarried = basicAllowanceSingle * 2;
        const basicAllowance =
          status === "married" ? basicAllowanceMarried : basicAllowanceSingle;

        let taxable = Math.max(0, income - basicAllowance);

        // Very rough progressive bands to approximate German tax
        let tax = 0;
        if (taxable <= 0) {
          tax = 0;
        } else if (taxable <= 20000) {
          tax = taxable * 0.14; // lower band ~14%
        } else if (taxable <= 60000) {
          tax = 20000 * 0.14 + (taxable - 20000) * 0.3; // mid band ~30%
        } else if (taxable <= 277000) {
          tax = 20000 * 0.14 + 40000 * 0.3 + (taxable - 60000) * 0.42; // top rate 42%
        } else {
          tax =
            20000 * 0.14 +
            40000 * 0.3 +
            (277000 - 60000) * 0.42 +
            (taxable - 277000) * 0.45; // 45% rich tax
        }

        return Math.max(0, tax);
      }

      // Approximate solidarity surcharge for individuals (post-2021 rules)
      function estimateSoliIndividual(incomeTax, status) {
        if (incomeTax <= 0) return 0;

        // Thresholds are defined on income tax amount, not income.
        // We use approximate thresholds for 2023+ (values rounded).
        // Single: full exemption up to ~€17,000 income tax, full Soli above ~€31,000.
        // Married: roughly double.
        const baseThresholdSingle = 17000;
        const fullThresholdSingle = 31000;
        const factor = status === "married" ? 2 : 1;

        const baseThreshold = baseThresholdSingle * factor;
        const fullThreshold = fullThresholdSingle * factor;

        if (incomeTax <= baseThreshold) {
          return 0;
        } else if (incomeTax >= fullThreshold) {
          return incomeTax * 0.055;
        } else {
          // Linear phase-in between thresholds
          const ratio =
            (incomeTax - baseThreshold) / (fullThreshold - baseThreshold);
          const effectiveRate = 0.055 * ratio;
          return incomeTax * effectiveRate;
        }
      }

      function estimateSoliCorporation(corpTax) {
        if (corpTax <= 0) return 0;
        return corpTax * 0.055;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const taxpayerButtons = document.querySelectorAll(
          '[data-role="taxpayer-type"]'
        );
        const individualOptions = document.getElementById("individual-options");
        const corporationOptions = document.getElementById(
          "corporation-options"
        );
        const filingStatusEl = document.getElementById("filing-status");
        const taxYearEl = document.getElementById("tax-year");
        const taxableIncomeEl = document.getElementById("taxable-income");
        const corpTaxBaseEl = document.getElementById("corp-tax-base");
        const corpTaxRateEl = document.getElementById("corp-tax-rate");
        const calcBtn = document.getElementById("calculate-btn");

        const resultStatus = document.getElementById("result-status");
        const resultTaxType = document.getElementById("result-tax-type");
        const resultTaxBase = document.getElementById("result-tax-base");
        const resultIncomeTax = document.getElementById("result-income-tax");
        const resultSoli = document.getElementById("result-soli");
        const resultSoliRate = document.getElementById("result-soli-rate");
        const resultExplanation = document.getElementById("result-explanation");

        let taxpayerType = "individual";

        taxpayerButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            taxpayerType = btn.dataset.value;
            taxpayerButtons.forEach((b) => {
              b.classList.remove(
                "bg-blue-50",
                "border-blue-500",
                "text-blue-700",
                "font-medium"
              );
              b.classList.add("bg-white", "text-gray-700");
            });
            btn.classList.add(
              "bg-blue-50",
              "border-blue-500",
              "text-blue-700",
              "font-medium"
            );
            btn.classList.remove("bg-white", "text-gray-700");

            if (taxpayerType === "individual") {
              individualOptions.classList.remove("hidden");
              corporationOptions.classList.add("hidden");
            } else {
              individualOptions.classList.add("hidden");
              corporationOptions.classList.remove("hidden");
            }

            // Reset results
            resultStatus.textContent = "Waiting for input";
            resultStatus.className =
              "result-badge px-2 py-1 rounded-full bg-gray-200 text-gray-700";
            resultTaxType.textContent = "–";
            resultTaxBase.textContent = "–";
            resultIncomeTax.textContent = "–";
            resultSoli.textContent = "–";
            resultSoliRate.textContent = "–";
            resultExplanation.textContent =
              "Enter your data and click “Calculate” to see your solidarity surcharge.";
          });
        });

        calcBtn.addEventListener("click", () => {
          if (taxpayerType === "individual") {
            const income = parseFloat(taxableIncomeEl.value);
            if (isNaN(income) || income < 0) {
              alert("Please enter a valid taxable income in euros.");
              return;
            }
            const status = filingStatusEl.value;

            const incomeTax = estimateGermanIncomeTax(income, status);
            const soli = estimateSoliIndividual(incomeTax, status);
            const effectiveRate = incomeTax > 0 ? (soli / incomeTax) * 100 : 0;

            resultTaxType.textContent = "Individual income tax";
            resultTaxBase.textContent = formatCurrency(income);
            resultIncomeTax.textContent = formatCurrency(incomeTax);
            resultSoli.textContent = formatCurrency(soli);
            resultSoliRate.textContent = formatPercent(effectiveRate);

            if (soli === 0) {
              resultStatus.textContent = "Exempt";
              resultStatus.className =
                "result-badge px-2 py-1 rounded-full bg-green-100 text-green-700";
              resultExplanation.textContent =
                "Based on your estimated income tax, you are below the solidarity surcharge threshold (Freigrenze), so no Soli is due.";
            } else if (effectiveRate < 5.5) {
              resultStatus.textContent = "Partial Soli";
              resultStatus.className =
                "result-badge px-2 py-1 rounded-full bg-yellow-100 text-yellow-800";
              resultExplanation.textContent =
                "You are in the phase-in zone. A reduced solidarity surcharge applies, so your effective Soli rate is below the full 5.5% of income tax.";
            } else {
              resultStatus.textContent = "Full Soli";
              resultStatus.className =
                "result-badge px-2 py-1 rounded-full bg-red-100 text-red-700";
              resultExplanation.textContent =
                "You are above the upper threshold, so the full solidarity surcharge of 5.5% of your income tax is applied.";
            }
          } else {
            const taxBase = parseFloat(corpTaxBaseEl.value);
            const rate = parseFloat(corpTaxRateEl.value);
            if (isNaN(taxBase) || taxBase < 0) {
              alert(
                "Please enter a valid corporate tax base (taxable profit) in euros."
              );
              return;
            }
            if (isNaN(rate) || rate < 0 || rate > 100) {
              alert(
                "Please enter a valid corporate tax rate between 0% and 100%."
              );
              return;
            }

            const corpTax = taxBase * (rate / 100);
            const soli = estimateSoliCorporation(corpTax);
            const effectiveRate = corpTax > 0 ? (soli / corpTax) * 100 : 0;

            resultTaxType.textContent = "Corporate income tax";
            resultTaxBase.textContent = formatCurrency(taxBase);
            resultIncomeTax.textContent = formatCurrency(corpTax);
            resultSoli.textContent = formatCurrency(soli);
            resultSoliRate.textContent = formatPercent(effectiveRate);

            if (soli === 0) {
              resultStatus.textContent = "No Soli";
              resultStatus.className =
                "result-badge px-2 py-1 rounded-full bg-green-100 text-green-700";
              resultExplanation.textContent =
                "With the current inputs, no corporate tax and therefore no solidarity surcharge is due.";
            } else {
              resultStatus.textContent = "Full Soli (5.5%)";
              resultStatus.className =
                "result-badge px-2 py-1 rounded-full bg-red-100 text-red-700";
              resultExplanation.textContent =
                "Corporations generally pay the full solidarity surcharge of 5.5% on their corporate income tax (Körperschaftsteuer).";
            }
          }
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
