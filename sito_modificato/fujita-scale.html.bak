    <script>
      // Data for original Fujita scale (simplified, classic ranges)
      const fujitaScale = [
        {
          code: "F0",
          mphMin: 40,
          mphMax: 72,
          damage:
            "Gale tornado. Light damage: branches broken, shallow-rooted trees pushed over, minor roof and sign damage.",
        },
        {
          code: "F1",
          mphMin: 73,
          mphMax: 112,
          damage:
            "Moderate damage: mobile homes pushed off foundations or overturned, roofs partially stripped, large tree limbs snapped.",
        },
        {
          code: "F2",
          mphMin: 113,
          mphMax: 157,
          damage:
            "Significant damage: roofs torn off well-built homes, mobile homes demolished, large trees uprooted.",
        },
        {
          code: "F3",
          mphMin: 158,
          mphMax: 206,
          damage:
            "Severe damage: entire stories of well-constructed houses destroyed, trains overturned, heavy cars lifted and thrown.",
        },
        {
          code: "F4",
          mphMin: 207,
          mphMax: 260,
          damage:
            "Devastating damage: well-constructed houses leveled, cars thrown, large debris becomes dangerous missiles.",
        },
        {
          code: "F5",
          mphMin: 261,
          mphMax: 318,
          damage:
            "Incredible damage: strong frame houses swept from foundations, trees debarked, heavy objects carried long distances.",
        },
      ];

      // Data for Enhanced Fujita scale (NOAA ranges)
      const efScale = [
        {
          code: "EF0",
          mphMin: 65,
          mphMax: 85,
          damage:
            "Light damage: small branches broken, shallow-rooted trees pushed over, minor roof damage.",
        },
        {
          code: "EF1",
          mphMin: 86,
          mphMax: 110,
          damage:
            "Moderate damage: large tree limbs snapped, mobile homes pushed off foundations or overturned.",
        },
        {
          code: "EF2",
          mphMin: 111,
          mphMax: 135,
          damage:
            "Considerable damage: roofs torn off well-built homes, large trees uprooted, light cars lifted off the ground.",
        },
        {
          code: "EF3",
          mphMin: 136,
          mphMax: 165,
          damage:
            "Severe damage: entire stories of well-constructed houses destroyed, trains overturned, heavy cars thrown.",
        },
        {
          code: "EF4",
          mphMin: 166,
          mphMax: 200,
          damage:
            "Devastating damage: well-constructed houses leveled, cars thrown significant distances, large debris missiles.",
        },
        {
          code: "EF5",
          mphMin: 201,
          mphMax: 1000,
          damage:
            "Incredible damage: strong frame houses swept from foundations, trees debarked, massive structural damage.",
        },
      ];

      let currentScaleType = "F"; // 'F' or 'EF'

      function mphToKmh(mph) {
        return mph * 1.60934;
      }

      function kmhToMph(kmh) {
        return kmh / 1.60934;
      }

      function populateTables() {
        const fBody = document.getElementById("fujita-table-body");
        const efBody = document.getElementById("efujita-table-body");
        fBody.innerHTML = "";
        efBody.innerHTML = "";

        fujitaScale.forEach((row, idx) => {
          const tr = document.createElement("tr");
          tr.className =
            idx % 2 === 0 ? "scale-F" + idx + " border-b" : "border-b";
          const kmhMin = mphToKmh(row.mphMin);
          const kmhMax = mphToKmh(row.mphMax);
          tr.innerHTML = `
        <td class="px-3 py-2 font-semibold">${row.code}</td>
        <td class="px-3 py-2">${row.mphMin}–${row.mphMax}</td>
        <td class="px-3 py-2">${kmhMin.toFixed(0)}–${kmhMax.toFixed(0)}</td>
        <td class="px-3 py-2">${row.damage}</td>
      `;
          fBody.appendChild(tr);
        });

        efScale.forEach((row, idx) => {
          const tr = document.createElement("tr");
          tr.className =
            idx % 2 === 0 ? "scale-EF" + idx + " border-b" : "border-b";
          const kmhMin = mphToKmh(row.mphMin);
          const kmhMax = mphToKmh(row.mphMax);
          tr.innerHTML = `
        <td class="px-3 py-2 font-semibold">${row.code}</td>
        <td class="px-3 py-2">${row.mphMin}–${row.mphMax}</td>
        <td class="px-3 py-2">${kmhMin.toFixed(0)}–${kmhMax.toFixed(0)}</td>
        <td class="px-3 py-2">${row.damage}</td>
      `;
          efBody.appendChild(tr);
        });
      }

      function findCategoryByWind(mph, type) {
        const scale = type === "F" ? fujitaScale : efScale;
        return (
          scale.find((row) => mph >= row.mphMin && mph <= row.mphMax) || null
        );
      }

      function updateScaleButtons() {
        const btnF = document.getElementById("btn-scale-f");
        const btnEF = document.getElementById("btn-scale-ef");
        if (currentScaleType === "F") {
          btnF.classList.add("bg-blue-600", "text-white");
          btnF.classList.remove("bg-white", "text-gray-700");
          btnEF.classList.remove("bg-blue-600", "text-white");
          btnEF.classList.add("bg-white", "text-gray-700");
        } else {
          btnEF.classList.add("bg-blue-600", "text-white");
          btnEF.classList.remove("bg-white", "text-gray-700");
          btnF.classList.remove("bg-blue-600", "text-white");
          btnF.classList.add("bg-white", "text-gray-700");
        }
      }

      function handleCalculate() {
        const inputEl = document.getElementById("wind-speed");
        const unitEl = document.getElementById("wind-unit");
        const ratingEl = document.getElementById("result-rating");
        const rangeEl = document.getElementById("result-wind-range");
        const damageEl = document.getElementById("result-damage");

        const value = parseFloat(inputEl.value);
        if (isNaN(value) || value <= 0) {
          ratingEl.textContent = "–";
          rangeEl.textContent = "Please enter a positive wind speed.";
          damageEl.textContent = "";
          return;
        }

        let mph = value;
        if (unitEl.value === "kmh") {
          mph = kmhToMph(value);
        }

        const category = findCategoryByWind(mph, currentScaleType);
        if (!category) {
          ratingEl.textContent = "Out of range";
          rangeEl.textContent =
            "The entered wind speed is outside the standard scale ranges.";
          damageEl.textContent = "";
          return;
        }

        const kmhMin = mphToKmh(category.mphMin);
        const kmhMax = mphToKmh(category.mphMax);

        ratingEl.textContent =
          currentScaleType === "F" ? category.code : category.code;
        rangeEl.textContent = `Category wind range: ${category.mphMin}–${
          category.mphMax
        } mph (${kmhMin.toFixed(0)}–${kmhMax.toFixed(0)} km/h).`;
        damageEl.textContent = category.damage;
      }

      function handleDamageSelect() {
        const select = document.getElementById("damage-select");
        const hint = document.getElementById("damage-hint");
        const ratingEl = document.getElementById("result-rating");
        const rangeEl = document.getElementById("result-wind-range");
        const damageEl = document.getElementById("result-damage");

        const value = select.value;
        if (!value) {
          hint.textContent = "";
          return;
        }

        const category = efScale.find((row) => row.code === value);
        if (!category) return;

        const kmhMin = mphToKmh(category.mphMin);
        const kmhMax = mphToKmh(category.mphMax);

        hint.textContent = `This damage description most closely matches ${
          category.code
        }, with estimated winds of ${category.mphMin}–${
          category.mphMax
        } mph (${kmhMin.toFixed(0)}–${kmhMax.toFixed(0)} km/h).`;

        // Also reflect in main result panel for convenience
        ratingEl.textContent = category.code;
        rangeEl.textContent = `Category wind range: ${category.mphMin}–${
          category.mphMax
        } mph (${kmhMin.toFixed(0)}–${kmhMax.toFixed(0)} km/h).`;
        damageEl.textContent = category.damage;
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateTables();
        updateScaleButtons();

        document.getElementById("btn-scale-f").addEventListener("click", () => {
          currentScaleType = "F";
          updateScaleButtons();
          handleCalculate();
        });

        document
          .getElementById("btn-scale-ef")
          .addEventListener("click", () => {
            currentScaleType = "EF";
            updateScaleButtons();
            handleCalculate();
          });

        document
          .getElementById("btn-calc")
          .addEventListener("click", handleCalculate);
        document.getElementById("wind-speed").addEventListener("keyup", (e) => {
          if (e.key === "Enter") handleCalculate();
        });
        document
          .getElementById("damage-select")
          .addEventListener("change", handleDamageSelect);
      });

      // MathJax config
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
