    <script>
      // Sync range displays
      function formatCurrency(value) {
        if (isNaN(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }

      function formatCurrency2(value) {
        if (isNaN(value)) return "$0.00";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }

      function formatPercent(value, digits = 1) {
        if (!isFinite(value)) return "—";
        return value.toFixed(digits) + "%";
      }

      const invoiceAmountEl = document.getElementById("invoiceAmount");
      const advanceRateEl = document.getElementById("advanceRate");
      const feeRateEl = document.getElementById("feeRate");
      const daysOutstandingEl = document.getElementById("daysOutstanding");
      const extraFeesEl = document.getElementById("extraFees");
      const loanAprEl = document.getElementById("loanApr");

      const advanceRateDisplay = document.getElementById("advanceRateDisplay");
      const feeRateDisplay = document.getElementById("feeRateDisplay");
      const daysOutstandingDisplay = document.getElementById(
        "daysOutstandingDisplay"
      );

      const advanceAmountDisplay = document.getElementById(
        "advanceAmountDisplay"
      );
      const totalFeesDisplay = document.getElementById("totalFeesDisplay");
      const reserveReleaseDisplay = document.getElementById(
        "reserveReleaseDisplay"
      );
      const netCashDisplay = document.getElementById("netCashDisplay");
      const aprDisplay = document.getElementById("aprDisplay");
      const loanComparisonText = document.getElementById("loanComparisonText");
      const scenarioTableBody = document.getElementById("scenarioTableBody");

      function updateDisplaysFromRanges() {
        advanceRateDisplay.textContent = advanceRateEl.value + "%";
        feeRateDisplay.textContent =
          parseFloat(feeRateEl.value).toFixed(1) + "%";
        daysOutstandingDisplay.textContent = daysOutstandingEl.value + " days";
      }

      function calculateFactoring(
        invoice,
        advanceRatePct,
        feeRatePer30Pct,
        days,
        extraFees
      ) {
        const advanceRate = advanceRatePct / 100;
        const feeRatePer30 = feeRatePer30Pct / 100;

        const advance = invoice * advanceRate;
        const periods = days / 30;
        const discountFee = invoice * feeRatePer30 * periods;
        const totalFees = discountFee + extraFees;

        const reserveBeforeFees = invoice - advance;
        const reserveRelease = reserveBeforeFees - totalFees;
        const netCash = advance + reserveRelease;

        // Effective APR approximation
        let apr = NaN;
        if (advance > 0 && days > 0) {
          const periodicRate = totalFees / advance;
          apr = periodicRate * (365 / days) * 100;
        }

        return {
          advance,
          totalFees,
          reserveRelease,
          netCash,
          apr,
        };
      }

      function updateCalculator() {
        const invoice = parseFloat(invoiceAmountEl.value) || 0;
        const advanceRate = parseFloat(advanceRateEl.value) || 0;
        const feeRate = parseFloat(feeRateEl.value) || 0;
        const days = parseFloat(daysOutstandingEl.value) || 0;
        const extraFees = parseFloat(extraFeesEl.value) || 0;
        const loanApr = parseFloat(loanAprEl.value) || 0;

        const result = calculateFactoring(
          invoice,
          advanceRate,
          feeRate,
          days,
          extraFees
        );

        advanceAmountDisplay.textContent = formatCurrency(result.advance);
        totalFeesDisplay.textContent = formatCurrency2(result.totalFees);
        reserveReleaseDisplay.textContent = formatCurrency2(
          result.reserveRelease
        );
        netCashDisplay.textContent = formatCurrency2(result.netCash);
        aprDisplay.textContent = isFinite(result.apr)
          ? formatPercent(result.apr, 1) + " APR"
          : "—";

        // Loan comparison
        if (loanApr > 0 && result.advance > 0 && days > 0) {
          const loanInterest = result.advance * (loanApr / 100) * (days / 365);
          loanComparisonText.innerHTML =
            `At ${loanApr.toFixed(1)}% APR, borrowing ${formatCurrency(
              result.advance
            )} for ${days.toFixed(0)} days ` +
            `would cost about <span class="font-semibold">${formatCurrency2(
              loanInterest
            )}</span> in interest, ` +
            `versus <span class="font-semibold">${formatCurrency2(
              result.totalFees
            )}</span> in factoring fees.`;
        } else {
          loanComparisonText.textContent =
            "Enter a loan APR to compare the cost of factoring with a traditional loan.";
        }

        updateScenarioTable(invoice, advanceRate, extraFees);
      }

      function updateScenarioTable(invoice, advanceRate, extraFees) {
        const baseFeeRate = parseFloat(feeRateEl.value) || 0;
        const baseDays = parseFloat(daysOutstandingEl.value) || 0;

        const dayOptions = [30, 45, 60, 75];
        const feeOptions = [
          Math.max(0.5, baseFeeRate - 1),
          baseFeeRate,
          baseFeeRate + 1,
        ];

        scenarioTableBody.innerHTML = "";

        dayOptions.forEach((days) => {
          feeOptions.forEach((feeRate) => {
            const res = calculateFactoring(
              invoice,
              advanceRate,
              feeRate,
              days,
              extraFees
            );
            const tr = document.createElement("tr");
            tr.className = "border-t";

            tr.innerHTML = `
          <td class="px-3 py-2 text-gray-700">${days} days</td>
          <td class="px-3 py-2 text-gray-700">${feeRate.toFixed(1)}%</td>
          <td class="px-3 py-2 text-right text-gray-700">${formatCurrency2(
            res.totalFees
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${formatCurrency2(
            res.netCash
          )}</td>
          <td class="px-3 py-2 text-right text-gray-700">${
            isFinite(res.apr) ? formatPercent(res.apr, 1) : "—"
          }</td>
        `;
            scenarioTableBody.appendChild(tr);
          });
        });
      }

      // Reset button
      document.getElementById("resetDefaults").addEventListener("click", () => {
        invoiceAmountEl.value = 50000;
        advanceRateEl.value = 85;
        feeRateEl.value = 3;
        daysOutstandingEl.value = 45;
        extraFeesEl.value = 0;
        loanAprEl.value = 12;
        updateDisplaysFromRanges();
        updateCalculator();
      });

      // Event listeners
      [invoiceAmountEl, extraFeesEl, loanAprEl].forEach((el) => {
        el.addEventListener("input", updateCalculator);
      });

      [advanceRateEl, feeRateEl, daysOutstandingEl].forEach((el) => {
        el.addEventListener("input", () => {
          updateDisplaysFromRanges();
          updateCalculator();
        });
      });

      // Initialize
      updateDisplaysFromRanges();
      updateCalculator();
    </script>

