    <script>
      // Personal DTI check
      function formatPercent(value) {
        if (isNaN(value)) return "";
        return value.toFixed(1) + "%";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const personalIncomeEl = document.getElementById("personal-income");
        const personalDebtEl = document.getElementById("personal-debt-payment");
        const personalResultEl = document.getElementById("personal-result");
        const personalBtn = document.getElementById("personal-check-btn");

        const businessEbitdaEl = document.getElementById("business-ebitda");
        const businessDebtEl = document.getElementById("business-debt");
        const businessResultEl = document.getElementById("business-result");
        const businessBtn = document.getElementById("business-check-btn");

        function analyzePersonal() {
          const income = parseFloat(personalIncomeEl.value);
          const debt = parseFloat(personalDebtEl.value);

          if (!income || income <= 0 || !debt || debt < 0) {
            personalResultEl.innerHTML =
              '<span class="text-red-600">Enter both income and debt payments to see your result.</span>';
            return;
          }

          const dti = (debt / income) * 100;
          let verdict, color, note;

          if (dti < 20) {
            verdict = "Very comfortable";
            color = "text-emerald-700";
            note =
              "You have a low debt load relative to your income. You likely have room for additional borrowing if needed, assuming your budget is healthy.";
          } else if (dti < 36) {
            verdict = "Generally acceptable";
            color = "text-green-700";
            note =
              "Most lenders consider this range acceptable. Still, avoid taking on unnecessary high-interest debt.";
          } else if (dti < 43) {
            verdict = "Stretched";
            color = "text-amber-700";
            note =
              "Your debt level may limit access to new credit or lead to higher interest rates. Consider paying down balances before borrowing more.";
          } else {
            verdict = "High risk";
            color = "text-red-700";
            note =
              "Your debt-to-income ratio is high. New borrowing could be difficult or expensive, and you may want to focus on repayment or seek advice.";
          }

          personalResultEl.innerHTML =
            '<p class="font-medium ' +
            color +
            '">DTI: ' +
            formatPercent(dti) +
            " – " +
            verdict +
            "</p>" +
            '<p class="text-gray-700 mt-1">' +
            note +
            "</p>";
        }

        function analyzeBusiness() {
          const ebitda = parseFloat(businessEbitdaEl.value);
          const debt = parseFloat(businessDebtEl.value);

          if (!ebitda || ebitda <= 0 || !debt || debt < 0) {
            businessResultEl.innerHTML =
              '<span class="text-red-600">Enter both EBITDA and total debt to see your result.</span>';
            return;
          }

          const leverage = debt / ebitda; // Debt / EBITDA
          let verdict, color, note;

          if (leverage < 2) {
            verdict = "Conservative leverage";
            color = "text-emerald-700";
            note =
              "Your debt level is relatively low compared to earnings. Lenders often view this favorably, assuming stable cash flows.";
          } else if (leverage < 3.5) {
            verdict = "Moderate leverage";
            color = "text-green-700";
            note =
              "This range is common for many established businesses. Monitor cash flow and covenants, especially in downturns.";
          } else if (leverage < 5) {
            verdict = "Elevated leverage";
            color = "text-amber-700";
            note =
              "Debt is on the higher side. Access to new borrowing may be constrained, and small shocks could create stress.";
          } else {
            verdict = "Highly leveraged";
            color = "text-red-700";
            note =
              "Your business is carrying a high debt load relative to earnings. Consider deleveraging, refinancing, or raising equity.";
          }

          businessResultEl.innerHTML =
            '<p class="font-medium ' +
            color +
            '">Debt / EBITDA: ' +
            leverage.toFixed(2) +
            "x – " +
            verdict +
            "</p>" +
            '<p class="text-gray-700 mt-1">' +
            note +
            "</p>";
        }

        if (personalBtn) personalBtn.addEventListener("click", analyzePersonal);
        if (businessBtn) businessBtn.addEventListener("click", analyzeBusiness);
      });

