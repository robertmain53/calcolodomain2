<script>
  // Core calculation logic
  function toHp(power, unit) {
    const KW_TO_HP = 1.34102;
    const PS_TO_HP = 0.98632;
    if (unit === 'hp') return power;
    if (unit === 'kw') return power * KW_TO_HP;
    if (unit === 'ps') return power * PS_TO_HP;
    return power;
  }

  function toKg(weight, unit) {
    const LB_TO_KG = 0.45359237;
    if (unit === 'kg') return weight;
    if (unit === 'lb') return weight * LB_TO_KG;
    if (unit === 'tonne') return weight * 1000;
    if (unit === 'shortTon') return weight * 2000 * LB_TO_KG;
    return weight;
  }

  function formatNumber(val, decimals) {
    if (!isFinite(val)) return '–';
    return val.toFixed(decimals);
  }

  function classifyPerformance(hpPerTon) {
    if (!isFinite(hpPerTon) || hpPerTon <= 0) return '';
    if (hpPerTon < 80) return 'This is in the economy car range – performance will feel modest but adequate for city driving.';
    if (hpPerTon < 130) return 'Typical for family cars and crossovers – balanced everyday performance.';
    if (hpPerTon < 180) return 'Comparable to a warm hatch or sporty sedan – noticeably quick in daily use.';
    if (hpPerTon < 240) return 'Sports car territory – strong acceleration and engaging performance.';
    if (hpPerTon < 320) return 'High-performance sports car or entry supercar – very rapid acceleration.';
    if (hpPerTon < 600) return 'Supercar level – extremely fast, traction and driver skill become critical.';
    return 'Motorcycle or extreme track machine territory – power-to-weight is exceptionally high.';
  }

  function calculate() {
    const powerVal = parseFloat(document.getElementById('powerValue').value);
    const powerUnit = document.getElementById('powerUnit').value;
    const weightVal = parseFloat(document.getElementById('weightValue').value);
    const weightUnit = document.getElementById('weightUnit').value;
    const errorMsg = document.getElementById('errorMsg');

    if (isNaN(powerVal) || powerVal <= 0 || isNaN(weightVal) || weightVal <= 0) {
      errorMsg.textContent = 'Please enter positive values for both power and weight.';
      errorMsg.classList.remove('hidden');
      return;
    }
    errorMsg.classList.add('hidden');

    const hp = toHp(powerVal, powerUnit);
    const kg = toKg(weightVal, weightUnit);

    const tonne = kg / 1000;
    const lb = kg * 2.20462;
    const shortTon = lb / 2000;
    const kw = hp / 1.34102;

    const hpPerTonne = hp / tonne;
    const hpPerShortTon = hp / shortTon;
    const hpPerKg = hp / kg;
    const hpPerLb = hp / lb;
    const kwPerKg = kw / kg;
    const lbPerHp = lb / hp;

    document.getElementById('resHpPerTonne').textContent = formatNumber(hpPerTonne, 1) + ' hp/ton';
    document.getElementById('resHpPerShortTon').textContent = formatNumber(hpPerShortTon, 1) + ' hp/short ton';
    document.getElementById('resHpPerKg').textContent = formatNumber(hpPerKg, 3) + ' hp/kg';
    document.getElementById('resHpPerLb').textContent = formatNumber(hpPerLb, 4) + ' hp/lb';
    document.getElementById('resKwPerKg').textContent = formatNumber(kwPerKg, 3) + ' kW/kg';
    document.getElementById('resLbPerHp').textContent = formatNumber(lbPerHp, 1) + ' lb/hp';

    document.getElementById('performanceTag').textContent = classifyPerformance(hpPerTonne);
  }

  document.getElementById('calcBtn').addEventListener('click', calculate);

  // Swap logic: swap roles conceptually by inverting main metric (lb/hp vs hp/ton)
  document.getElementById('swapBtn').addEventListener('click', function () {
    const lbPerHpText = document.getElementById('resLbPerHp').textContent;
    const hpPerTonneText = document.getElementById('resHpPerTonne').textContent;
    if (lbPerHpText.includes('–') || hpPerTonneText.includes('–')) return;

    // Just visually emphasize lb/hp vs hp/ton; actual numbers already consistent
    const resultsPanel = document.getElementById('resultsPanel');
    resultsPanel.classList.add('ring-1', 'ring-blue-200');
    setTimeout(() => resultsPanel.classList.remove('ring-1', 'ring-blue-200'), 800);
  });

  // Presets
  const presets = {
    hotHatch: { hp: 230, kg: 1350 },
    sportsCar: { hp: 350, kg: 1500 },
    supercar: { hp: 650, kg: 1500 },
    superbike: { hp: 200, kg: 200 }
  };

  document.querySelectorAll('button[data-preset]').forEach(btn => {
    btn.addEventListener('click', () => {
      const key = btn.getAttribute('data-preset');
      const p = presets[key];
      if (!p) return;
      document.getElementById('powerValue').value = p.hp;
      document.getElementById('powerUnit').value = 'hp';
      document.getElementById('weightValue').value = p.kg;
      document.getElementById('weightUnit').value = 'kg';
      calculate();
    });
  });

  // Auto-calc on Enter
  ['powerValue', 'weightValue'].forEach(id => {
    document.getElementById(id).addEventListener('keyup', e => {
      if (e.key === 'Enter') calculate();
    });
  });

  window.MathJax = {
    tex: { inlineMath: [['\\(','\\)'], ['$', '$']], displayMath: [['$','$'], ['\\[','\\]']] },
    svg: { fontCache: 'global' }
  };
</script>
