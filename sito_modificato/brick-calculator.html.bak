    <script>
      // Utility: unit conversions
      const INCH_TO_M = 0.0254;
      const FT_TO_M = 0.3048;
      const MM_TO_M = 0.001;
      const FT3_PER_M3 = 35.3146667;

      function toMetersLength(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v) || v <= 0) return 0;
        switch (unit) {
          case "ft":
            return v * FT_TO_M;
          case "m":
            return v;
          case "in":
            return v * INCH_TO_M;
          case "mm":
            return v * MM_TO_M;
          default:
            return 0;
        }
      }

      function formatNumber(n, decimals = 2) {
        if (!isFinite(n)) return "–";
        return n.toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: 0,
        });
      }

      // Unit toggle behavior
      const unitButtons = document.querySelectorAll(".unit-toggle");
      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          unitButtons.forEach((b) => {
            b.classList.remove("bg-blue-600", "text-white");
            b.classList.add("bg-gray-100", "text-gray-700");
          });
          btn.classList.add("bg-blue-600", "text-white");
          btn.classList.remove("bg-gray-100", "text-gray-700");

          const mode = btn.dataset.unit;
          const lengthUnit = document.getElementById("wall-length-unit");
          const heightUnit = document.getElementById("wall-height-unit");
          const jointUnit = document.getElementById("joint-unit");
          const brickSizeUnit = document.getElementById("brick-size-unit");

          if (mode === "imperial") {
            lengthUnit.value = "ft";
            heightUnit.value = "ft";
            jointUnit.value = "in";
            brickSizeUnit.value = "in";
          } else {
            lengthUnit.value = "m";
            heightUnit.value = "m";
            jointUnit.value = "mm";
            brickSizeUnit.value = "mm";
          }
        });
      });

      // Brick presets
      const brickPreset = document.getElementById("brick-preset");
      const brickLength = document.getElementById("brick-length");
      const brickHeight = document.getElementById("brick-height");
      const brickDepth = document.getElementById("brick-depth");
      const brickSizeUnit = document.getElementById("brick-size-unit");
      const brickSizeCustom = document.getElementById("brick-size-custom");

      function applyBrickPreset() {
        const preset = brickPreset.value;
        if (preset === "modular") {
          brickLength.value = 7.625;
          brickHeight.value = 2.25;
          brickDepth.value = 3.625;
          brickSizeUnit.value = "in";
          brickSizeCustom.classList.remove("opacity-50");
        } else if (preset === "standard") {
          brickLength.value = 8;
          brickHeight.value = 2.25;
          brickDepth.value = 3.625;
          brickSizeUnit.value = "in";
          brickSizeCustom.classList.remove("opacity-50");
        } else if (preset === "uk") {
          brickLength.value = 215;
          brickHeight.value = 65;
          brickDepth.value = 102.5;
          brickSizeUnit.value = "mm";
          brickSizeCustom.classList.remove("opacity-50");
        } else {
          // custom: keep values, just ensure editable
          brickSizeCustom.classList.remove("opacity-50");
        }
      }
      brickPreset.addEventListener("change", applyBrickPreset);
      applyBrickPreset();

      // Openings management
      const openingsContainer = document.getElementById("openings-container");
      const addOpeningBtn = document.getElementById("add-opening");

      function createOpeningRow(index) {
        const row = document.createElement("div");
        row.className =
          "flex flex-wrap items-center gap-2 border rounded px-2 py-2";
        row.innerHTML = `
      <span class="text-xs text-gray-500">Opening ${index + 1}</span>
      <input type="number" step="0.01" class="opening-width w-20 border rounded px-1 py-0.5 text-sm" placeholder="Width">
      <input type="number" step="0.01" class="opening-height w-20 border rounded px-1 py-0.5 text-sm" placeholder="Height">
      <select class="opening-unit w-20 border rounded px-1 py-0.5 text-sm">
        <option value="ft">ft</option>
        <option value="m">m</option>
      </select>
      <button type="button" class="remove-opening text-xs text-red-600 ml-auto">Remove</button>
    `;
        row.querySelector(".remove-opening").addEventListener("click", () => {
          row.remove();
          updateOpeningLabels();
        });
        return row;
      }

      function updateOpeningLabels() {
        const rows = openingsContainer.querySelectorAll("div");
        rows.forEach((row, idx) => {
          const label = row.querySelector("span");
          if (label) label.textContent = `Opening ${idx + 1}`;
        });
      }

      addOpeningBtn.addEventListener("click", () => {
        const idx = openingsContainer.querySelectorAll("div").length;
        openingsContainer.appendChild(createOpeningRow(idx));
      });

      // Core calculation
      function calculate() {
        const lengthVal = document.getElementById("wall-length").value;
        const lengthUnit = document.getElementById("wall-length-unit").value;
        const heightVal = document.getElementById("wall-height").value;
        const heightUnit = document.getElementById("wall-height-unit").value;
        const wallThicknessFactor =
          parseFloat(document.getElementById("wall-thickness").value) || 1;

        const L = toMetersLength(lengthVal, lengthUnit);
        const H = toMetersLength(heightVal, heightUnit);
        if (L <= 0 || H <= 0) {
          alert("Please enter valid wall length and height.");
          return;
        }

        const grossArea = L * H;

        // Openings
        let openingsArea = 0;
        openingsContainer.querySelectorAll("div").forEach((row) => {
          const w = row.querySelector(".opening-width").value;
          const h = row.querySelector(".opening-height").value;
          const u = row.querySelector(".opening-unit").value;
          const Wm = toMetersLength(w, u);
          const Hm = toMetersLength(h, u);
          if (Wm > 0 && Hm > 0) openingsArea += Wm * Hm;
        });
        const netArea = Math.max(grossArea - openingsArea, 0);

        // Brick dimensions
        const Lb = toMetersLength(brickLength.value, brickSizeUnit.value);
        const Hb = toMetersLength(brickHeight.value, brickSizeUnit.value);
        const Db = toMetersLength(brickDepth.value, brickSizeUnit.value);
        const jointVal = document.getElementById("joint-thickness").value;
        const jointUnit = document.getElementById("joint-unit").value;
        const Tj = toMetersLength(jointVal, jointUnit);

        if (Lb <= 0 || Hb <= 0 || Db <= 0) {
          alert("Please enter valid brick dimensions.");
          return;
        }

        const moduleL = Lb + Tj;
        const moduleH = Hb + Tj;
        const brickFaceArea = moduleL * moduleH;

        if (brickFaceArea <= 0) {
          alert(
            "Brick face area is zero. Check dimensions and joint thickness."
          );
          return;
        }

        // Bricks per wythe
        const bricksNetSingle = netArea / brickFaceArea;
        const bricksNet = bricksNetSingle * wallThicknessFactor;

        const wastePct =
          parseFloat(document.getElementById("waste").value) || 0;
        const bricksTotal = bricksNet * (1 + wastePct / 100);

        // Mortar volume
        const wallThicknessMeters = wallThicknessFactor * Db;
        const wallVolume = netArea * wallThicknessMeters;
        const brickVolume = Lb * Hb * Db;
        const bricksNetRounded = bricksNet; // use continuous for volume
        const bricksVolumeTotal = bricksNetRounded * brickVolume;
        let mortarVolumeM3 = wallVolume - bricksVolumeTotal;
        if (mortarVolumeM3 < 0) mortarVolumeM3 = 0;
        const mortarVolumeFt3 = mortarVolumeM3 * FT3_PER_M3;
        const mortarBags = mortarVolumeFt3 / 0.6; // ~0.6 ft³ per 80 lb bag

        // Cost
        const costPerBrick = parseFloat(
          document.getElementById("cost-per-brick").value
        );
        const costPerBag = parseFloat(
          document.getElementById("cost-per-mortar-bag").value
        );
        const costSection = document.getElementById("results-cost");
        if (!isNaN(costPerBrick) || !isNaN(costPerBag)) {
          const bricksCost = !isNaN(costPerBrick)
            ? bricksTotal * costPerBrick
            : 0;
          const mortarCost = !isNaN(costPerBag) ? mortarBags * costPerBag : 0;
          const totalCost = bricksCost + mortarCost;
          document.getElementById("cost-bricks").textContent = isNaN(
            costPerBrick
          )
            ? "–"
            : `$${formatNumber(bricksCost, 2)}`;
          document.getElementById("cost-mortar").textContent = isNaN(costPerBag)
            ? "–"
            : `$${formatNumber(mortarCost, 2)}`;
          document.getElementById("cost-total").textContent = `$${formatNumber(
            totalCost,
            2
          )}`;
          costSection.classList.remove("hidden");
        } else {
          costSection.classList.add("hidden");
        }

        // Update UI
        document.getElementById("net-bricks").textContent = formatNumber(
          Math.ceil(bricksNet)
        );
        document.getElementById("total-bricks").textContent = formatNumber(
          Math.ceil(bricksTotal)
        );

        document.getElementById("mortar-volume").textContent = `${formatNumber(
          mortarVolumeM3,
          3
        )} m³ (${formatNumber(mortarVolumeFt3, 2)} ft³)`;
        document.getElementById("mortar-bags").textContent = formatNumber(
          Math.ceil(mortarBags)
        );

        document.getElementById(
          "wall-area-gross"
        ).textContent = `${formatNumber(grossArea, 2)} m²`;
        document.getElementById(
          "wall-area-openings"
        ).textContent = `${formatNumber(openingsArea, 2)} m²`;
        document.getElementById("wall-area-net").textContent = `${formatNumber(
          netArea,
          2
        )} m²`;
        document.getElementById(
          "brick-face-area"
        ).textContent = `${formatNumber(brickFaceArea, 4)} m²`;

        const bricksPerM2 = 1 / brickFaceArea;
        document.getElementById(
          "brick-coverage-note"
        ).textContent = `Approx. ${formatNumber(
          bricksPerM2,
          1
        )} bricks per m² per wythe (including joints).`;
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculate);

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("wall-length").value = 10;
        document.getElementById("wall-height").value = 8;
        document.getElementById("wall-length-unit").value = "ft";
        document.getElementById("wall-height-unit").value = "ft";
        document.getElementById("wall-thickness").value = "1";
        openingsContainer.innerHTML = "";
        brickPreset.value = "modular";
        applyBrickPreset();
        document.getElementById("joint-thickness").value = 0.375;
        document.getElementById("joint-unit").value = "in";
        document.getElementById("waste").value = 10;
        document.getElementById("cost-per-brick").value = "";
        document.getElementById("cost-per-mortar-bag").value = "";
        document.getElementById("results-cost").classList.add("hidden");
        document.getElementById("net-bricks").textContent = "–";
        document.getElementById("total-bricks").textContent = "–";
        document.getElementById("mortar-volume").textContent = "–";
        document.getElementById("mortar-bags").textContent = "–";
        document.getElementById("wall-area-gross").textContent = "–";
        document.getElementById("wall-area-openings").textContent = "–";
        document.getElementById("wall-area-net").textContent = "–";
        document.getElementById("brick-face-area").textContent = "–";
        document.getElementById("brick-coverage-note").textContent = "";
      });

      // Initial auto-calc for default values
      window.addEventListener("load", () => {
        calculate();
      });

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", () => {
