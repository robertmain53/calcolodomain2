    <script>
      (function () {
        const yearsSelect = document.getElementById("years");
        const startYearInput = document.getElementById("start-year");
        const openingCashInput = document.getElementById("opening-cash");

        const incomeBody = document.getElementById("income-body");
        const balanceBody = document.getElementById("balance-body");
        const cashflowBody = document.getElementById("cashflow-body");
        const ratiosBody = document.getElementById("ratios-body");

        function getPlanningYears() {
          const n = parseInt(yearsSelect.value, 10);
          const start = parseInt(
            startYearInput.value || new Date().getFullYear(),
            10
          );
          return Array.from({ length: n }, (_, i) => start + i);
        }

        function updateYearHeaders() {
          const years = getPlanningYears();
          document.querySelectorAll(".year-header").forEach((th) => {
            const idx = parseInt(th.getAttribute("data-year-index"), 10);
            if (idx < years.length) {
              th.textContent = years[idx];
              th.classList.remove("hidden");
            } else {
              th.textContent = "";
              th.classList.add("hidden");
            }
          });
          document.querySelectorAll(".optional-year").forEach((el) => {
            const idx = parseInt(el.getAttribute("data-year-index"), 10);
            if (idx < years.length) {
              el.classList.remove("hidden");
            } else {
              el.classList.add("hidden");
            }
          });
        }

        function readAssumptionRow(rowKey) {
          const inputs = document.querySelectorAll(
            'input[data-row="' + rowKey + '"]'
          );
          const years = getPlanningYears();
          const arr = [];
          inputs.forEach((input) => {
            const col = parseInt(input.getAttribute("data-col"), 10);
            if (col < years.length) {
              arr[col] = parseFloat(input.value || "0");
            }
          });
          for (let i = 0; i < years.length; i++) {
            if (typeof arr[i] === "undefined") arr[i] = 0;
          }
          return arr;
        }

        function computeModel() {
          const years = getPlanningYears();
          const n = years.length;
          const openingCash = parseFloat(openingCashInput.value || "0");

          const revenue = readAssumptionRow("revenue");
          const cogs = readAssumptionRow("cogs");
          const opex = readAssumptionRow("opex");
          const depr = readAssumptionRow("depr");
          const interest = readAssumptionRow("interest");
          const taxrate = readAssumptionRow("taxrate").map((v) => v / 100);
          const capex = readAssumptionRow("capex");
          const debtChange = readAssumptionRow("debtchange");
          const equityChange = readAssumptionRow("equitychange");

          const grossProfit = [];
          const ebitda = [];
          const ebit = [];
          const preTax = [];
          const tax = [];
          const netIncome = [];

          const opCF = [];
          const invCF = [];
          const finCF = [];
          const netCF = [];
          const cash = [];

          const fixedAssets = [];
          const debt = [];
          const equity = [];
          const totalAssets = [];
          const totalLiabEq = [];

          let prevCash = openingCash;
          let prevFA = 0;
          let prevDebt = 0;
          let prevEquity = 0;
          let retainedEarnings = 0;

          for (let t = 0; t < n; t++) {
            grossProfit[t] = revenue[t] - cogs[t];
            ebitda[t] = grossProfit[t] - opex[t];
            ebit[t] = ebitda[t] - depr[t];
            preTax[t] = ebit[t] - interest[t];
            tax[t] = preTax[t] > 0 ? preTax[t] * taxrate[t] : 0;
            netIncome[t] = preTax[t] - tax[t];

            opCF[t] = netIncome[t] + depr[t];
            invCF[t] = -capex[t];
            finCF[t] = debtChange[t] + equityChange[t];
            netCF[t] = opCF[t] + invCF[t] + finCF[t];
            cash[t] = prevCash + netCF[t];

            fixedAssets[t] = prevFA + capex[t] - depr[t];
            if (fixedAssets[t] < 0) fixedAssets[t] = 0;

            debt[t] = prevDebt + debtChange[t];
            retainedEarnings += netIncome[t];
            equity[t] = prevEquity + equityChange[t] + netIncome[t];

            totalAssets[t] = cash[t] + fixedAssets[t];
            totalLiabEq[t] = debt[t] + equity[t];

            prevCash = cash[t];
            prevFA = fixedAssets[t];
            prevDebt = debt[t];
            prevEquity = equity[t];
          }

          return {
            years,
            revenue,
            cogs,
            opex,
            depr,
            interest,
            taxrate,
            grossProfit,
            ebitda,
            ebit,
            preTax,
            tax,
            netIncome,
            opCF,
            invCF,
            finCF,
            netCF,
            cash,
            fixedAssets,
            debt,
            equity,
            totalAssets,
            totalLiabEq,
          };
        }

        function fmt(num, decimals = 0) {
          if (!isFinite(num)) return "-";
          return num.toLocaleString(undefined, {
            maximumFractionDigits: decimals,
            minimumFractionDigits: decimals,
          });
        }

        function renderIncome(model) {
          const rows = [];
          function addRow(label, arr, bold = false) {
            const cls = bold ? "font-semibold bg-gray-50" : "";
            let html =
              '<tr class="' +
              cls +
              '"><td class="px-2 py-1 border-b">' +
              label +
              "</td>";
            for (let i = 0; i < model.years.length; i++) {
              html +=
                '<td class="px-2 py-1 border-b text-right">' +
                fmt(arr[i]) +
                "</td>";
            }
            html += "</tr>";
            rows.push(html);
          }
          addRow("Revenue", model.revenue, true);
          addRow("Cost of goods sold (COGS)", model.cogs);
          addRow("Gross profit", model.grossProfit, true);
          addRow("Operating expenses (Opex)", model.opex);
          addRow("EBITDA", model.ebitda, true);
          addRow("Depreciation & amortization", model.depr);
          addRow("EBIT", model.ebit, true);
          addRow("Interest expense", model.interest);
          addRow("Pre-tax income", model.preTax, true);
          addRow("Income tax", model.tax);
          addRow("Net income", model.netIncome, true);
          incomeBody.innerHTML = rows.join("");
        }

        function renderBalance(model) {
          const rows = [];
          function addRow(label, arr, bold = false) {
            const cls = bold ? "font-semibold bg-gray-50" : "";
            let html =
              '<tr class="' +
              cls +
              '"><td class="px-2 py-1 border-b">' +
              label +
              "</td>";
            for (let i = 0; i < model.years.length; i++) {
              html +=
                '<td class="px-2 py-1 border-b text-right">' +
                fmt(arr[i]) +
                "</td>";
            }
            html += "</tr>";
            rows.push(html);
          }
          addRow("Cash", model.cash);
          addRow("Net fixed assets", model.fixedAssets);
          addRow("Total assets", model.totalAssets, true);
          rows.push(
            '<tr><td colspan="' +
              (model.years.length + 1) +
              '" class="px-2 py-1 border-b bg-gray-100 font-semibold">Liabilities & Equity</td></tr>'
          );
          addRow("Debt", model.debt);
          addRow("Equity", model.equity);
          addRow("Total liabilities & equity", model.totalLiabEq, true);
          balanceBody.innerHTML = rows.join("");
        }

        function renderCashflow(model) {
          const rows = [];
          function addRow(label, arr, bold = false) {
            const cls = bold ? "font-semibold bg-gray-50" : "";
            let html =
              '<tr class="' +
              cls +
              '"><td class="px-2 py-1 border-b">' +
              label +
              "</td>";
            for (let i = 0; i < model.years.length; i++) {
              html +=
                '<td class="px-2 py-1 border-b text-right">' +
                fmt(arr[i]) +
                "</td>";
            }
            html += "</tr>";
            rows.push(html);
          }
          addRow("Net income", model.netIncome);
          addRow("Depreciation & amortization", model.depr);
          addRow("Operating cash flow", model.opCF, true);
          addRow(
            "Capital expenditures (Capex)",
            model.capex || model.invCF.map((v) => -v)
          );
          addRow("Investing cash flow", model.invCF, true);
          addRow("Net debt issued / (repaid)", model.debtChange || []);
          addRow("Equity raised / (dividends)", model.equityChange || []);
          addRow("Financing cash flow", model.finCF, true);
          addRow("Net change in cash", model.netCF, true);
          addRow("Ending cash balance", model.cash, true);
          cashflowBody.innerHTML = rows.join("");
        }

        function renderRatios(model) {
          const rows = [];
          const n = model.years.length;
          function ratioRow(label, computeFn, decimals = 1, suffix = "%") {
            let html = '<tr><td class="px-2 py-1 border-b">' + label + "</td>";
            for (let i = 0; i < n; i++) {
              const val = computeFn(i);
              if (!isFinite(val)) {
                html += '<td class="px-2 py-1 border-b text-right">-</td>';
              } else {
                const pct = suffix === "%" ? val * 100 : val;
                html +=
                  '<td class="px-2 py-1 border-b text-right">' +
                  fmt(pct, decimals) +
                  (suffix || "") +
                  "</td>";
              }
            }
            html += "</tr>";
            rows.push(html);
          }

          ratioRow("Gross margin", (i) =>
            model.revenue[i] ? model.grossProfit[i] / model.revenue[i] : NaN
          );
          ratioRow("EBITDA margin", (i) =>
            model.revenue[i] ? model.ebitda[i] / model.revenue[i] : NaN
          );
          ratioRow("Net margin", (i) =>
            model.revenue[i] ? model.netIncome[i] / model.revenue[i] : NaN
          );
          ratioRow(
            "Debt-to-equity (x)",
            (i) => (model.equity[i] ? model.debt[i] / model.equity[i] : NaN),
            2,
            ""
          );
          ratioRow(
            "Interest coverage (EBIT / interest)",
            (i) =>
              model.interest[i] ? model.ebit[i] / model.interest[i] : NaN,
            1,
            "x"
          );
          ratioRow("Return on assets (ROA)", (i) =>
            model.totalAssets[i]
              ? model.netIncome[i] / model.totalAssets[i]
              : NaN
          );

          ratiosBody.innerHTML = rows.join("");
        }

        function recalc() {
          updateYearHeaders();
          const model = computeModel();
          renderIncome(model);
          renderBalance(model);
          renderCashflow(model);
          renderRatios(model);
        }

        // Tab switching
        document.querySelectorAll(".tab-btn").forEach((btn) => {
          btn.addEventListener("click", () => {
            const target = btn.getAttribute("data-tab");
            document
              .querySelectorAll(".tab-btn")
              .forEach((b) => b.classList.remove("tab-active"));
            btn.classList.add("tab-active");
            document
              .querySelectorAll(".tab-panel")
              .forEach((panel) => panel.classList.add("hidden"));
            document.getElementById("tab-" + target).classList.remove("hidden");
          });
        });

        // Recalculate on input changes
        yearsSelect.addEventListener("change", recalc);
        startYearInput.addEventListener("input", recalc);
        openingCashInput.addEventListener("input", recalc);
        document.querySelectorAll("input[data-row]").forEach((input) => {
          input.addEventListener("input", recalc);
        });

        // FAQ toggle (simple fallback if global script not yet applied)
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const answer = btn.parentElement.querySelector(".faq-answer");
              const icon = btn.querySelector("span");
              const isHidden = answer.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-answer")
                .forEach((a) => a.classList.add("hidden"));
              document
                .querySelectorAll("#faq-container .faq-question span")
                .forEach((s) => (s.textContent = "+"));
              if (isHidden) {
                answer.classList.remove("hidden");
                icon.textContent = "";
              }
            });
          });

        recalc();
      })();
    </script>
  
