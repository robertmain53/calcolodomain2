    <script>
      // Core Vigenere logic
      function buildAlphabetMap(alphabet) {
        const map = new Map();
        for (let i = 0; i < alphabet.length; i++) {
          const ch = alphabet[i];
          if (!map.has(ch)) {
            map.set(ch, i);
          }
        }
        return map;
      }

      function normalizeCase(str, mode) {
        if (mode === "upper") return str.toUpperCase();
        if (mode === "lower") return str.toLowerCase();
        return str;
      }

      function vigenereTransform({
        text,
        key,
        alphabet,
        mode,
        caseMode,
        nonalphaMode,
        keyAlign,
        showSteps,
      }) {
        const originalText = text;
        const alpha = alphabet;
        const alphaMap = buildAlphabetMap(alpha);
        const n = alpha.length;

        if (!key || !key.trim()) {
          throw new Error("Keyword is required.");
        }
        if (n === 0) {
          throw new Error("Alphabet cannot be empty.");
        }

        // Normalize text and key according to case mode for processing
        const processUpper = caseMode === "upper";
        const processLower = caseMode === "lower";
        let procText = originalText;
        let procKey = key;

        if (processUpper) {
          procText = originalText.toUpperCase();
          procKey = key.toUpperCase();
        } else if (processLower) {
          procText = originalText.toLowerCase();
          procKey = key.toLowerCase();
        }

        // Filter key to valid alphabet chars
        const keyChars = [];
        for (const ch of procKey) {
          if (alphaMap.has(ch)) keyChars.push(ch);
        }
        if (keyChars.length === 0) {
          throw new Error(
            "Keyword must contain at least one character from the alphabet."
          );
        }

        let outChars = [];
        let steps = [];
        let keyIndex = 0;

        for (let i = 0; i < procText.length; i++) {
          const ch = procText[i];
          const origCh = originalText[i];
          const inAlpha = alphaMap.has(ch);

          if (!inAlpha) {
            if (nonalphaMode === "keep") {
              outChars.push(origCh);
            }
            // if remove, skip adding anything
            if (keyAlign === "include-nonalpha") {
              keyIndex = (keyIndex + 1) % keyChars.length;
            }
            if (showSteps) {
              steps.push({
                pos: i + 1,
                input: origCh,
                keyChar: "",
                p: "",
                k: "",
                resultIndex: "",
                output: nonalphaMode === "keep" ? origCh : "",
              });
            }
            continue;
          }

          const keyChar = keyChars[keyIndex];
          const pIndex = alphaMap.get(ch);
          const kIndex = alphaMap.get(keyChar);

          let cIndex;
          if (mode === "encrypt") {
            cIndex = (pIndex + kIndex) % n;
          } else {
            cIndex = (pIndex - kIndex + n) % n;
          }
          let outCh = alpha[cIndex];

          // Restore case if preserving
          if (caseMode === "preserve") {
            const isUpper = origCh === origCh.toUpperCase();
            outCh = isUpper ? outCh.toUpperCase() : outCh.toLowerCase();
          }

          outChars.push(outCh);

          if (showSteps) {
            steps.push({
              pos: i + 1,
              input: origCh,
              keyChar: keyChar,
              p: pIndex,
              k: kIndex,
              resultIndex: cIndex,
              output: outCh,
            });
          }

          keyIndex = (keyIndex + 1) % keyChars.length;
        }

        return {
          output: outChars.join(""),
          steps,
        };
      }

      function renderStepsTable(steps) {
        if (!steps.length)
          return '<p class="text-xs text-gray-500">No enciphered characters to display.</p>';
        let html =
          '<table class="min-w-full text-left border-collapse text-xs">';
        html += '<thead><tr class="bg-gray-100">';
        html += '<th class="border border-gray-200 px-2 py-1">Pos</th>';
        html += '<th class="border border-gray-200 px-2 py-1">Input</th>';
        html += '<th class="border border-gray-200 px-2 py-1">Key</th>';
        html += '<th class="border border-gray-200 px-2 py-1">P</th>';
        html += '<th class="border border-gray-200 px-2 py-1">K</th>';
        html += '<th class="border border-gray-200 px-2 py-1">Result idx</th>';
        html += '<th class="border border-gray-200 px-2 py-1">Output</th>';
        html += "</tr></thead><tbody>";
        for (const row of steps) {
          html += "<tr>";
          html += `<td class="border border-gray-200 px-2 py-1">${row.pos}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1 mono">${row.input}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1 mono">${row.keyChar}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1">${row.p}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1">${row.k}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1">${row.resultIndex}</td>`;
          html += `<td class="border border-gray-200 px-2 py-1 mono">${row.output}</td>`;
          html += "</tr>";
        }
        html += "</tbody></table>";
        return html;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const runBtn = document.getElementById("run-btn");
        const swapBtn = document.getElementById("swap-btn");
        const clearBtn = document.getElementById("clear-btn");
        const inputEl = document.getElementById("input-text");
        const outputEl = document.getElementById("output-text");
        const keyEl = document.getElementById("key");
        const alphabetEl = document.getElementById("alphabet");
        const caseModeEl = document.getElementById("case-mode");
        const nonalphaModeEl = document.getElementById("nonalpha-mode");
        const keyAlignEl = document.getElementById("key-align");
        const showStepsEl = document.getElementById("show-steps");
        const statusEl = document.getElementById("status");
        const stepsSection = document.getElementById("steps-section");
        const stepsWrapper = document.getElementById("steps-table-wrapper");

        function getMode() {
          const radios = document.querySelectorAll('input[name="mode"]');
          for (const r of radios) {
            if (r.checked) return r.value;
          }
          return "encrypt";
        }

        function runCipher() {
          statusEl.textContent = "";
          stepsWrapper.innerHTML = "";
          stepsSection.classList.add("hidden");

          const text = inputEl.value || "";
          const key = keyEl.value || "";
          const alphabet = alphabetEl.value || "";
          const mode = getMode();
          const caseMode = caseModeEl.value;
          const nonalphaMode = nonalphaModeEl.value;
          const keyAlign = keyAlignEl.value;
          const showSteps = showStepsEl.checked;

          try {
            const { output, steps } = vigenereTransform({
              text,
              key,
              alphabet,
              mode,
              caseMode,
              nonalphaMode,
              keyAlign,
              showSteps,
            });
            outputEl.value = output;
            if (showSteps) {
              stepsWrapper.innerHTML = renderStepsTable(steps);
              stepsSection.classList.remove("hidden");
            }
            statusEl.textContent = `Done. Length: ${output.length} characters.`;
            statusEl.classList.remove("text-red-600");
            statusEl.classList.add("text-gray-500");
          } catch (err) {
            outputEl.value = "";
            statusEl.textContent = err.message || "Error while running cipher.";
            statusEl.classList.remove("text-gray-500");
            statusEl.classList.add("text-red-600");
          }
        }

        runBtn.addEventListener("click", runCipher);

        swapBtn.addEventListener("click", () => {
          const tmp = inputEl.value;
          inputEl.value = outputEl.value;
          outputEl.value = tmp;
        });

        clearBtn.addEventListener("click", () => {
          inputEl.value = "";
          outputEl.value = "";
          statusEl.textContent = "";
          stepsWrapper.innerHTML = "";
          stepsSection.classList.add("hidden");
        });

        // Run once with default example
        runCipher();
      });
    </script>

