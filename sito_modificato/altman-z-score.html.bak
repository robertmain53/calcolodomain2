    <script>
      // Mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        ?.addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          if (!menu) return;
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", String(isHidden));
        });

      // Calculator logic
      const modelSelect = document.getElementById("modelSelect");
      const modelHint = document.getElementById("modelHint");
      const salesContainer = document.getElementById("salesContainer");
      const equityHint = document.getElementById("equityHint");
      const x5Container = document.getElementById("x5Container");
      const x5DetailRow = document.getElementById("x5DetailRow");

      const modeRawBtn = document.getElementById("modeRawBtn");
      const modeRatiosBtn = document.getElementById("modeRatiosBtn");
      const rawForm = document.getElementById("rawForm");
      const ratiosForm = document.getElementById("ratiosForm");

      const calculateBtn = document.getElementById("calculateBtn");
      const resetBtn = document.getElementById("resetBtn");

      const resultsSection = document.getElementById("resultsSection");
      const resultModelLabel = document.getElementById("resultModelLabel");
      const zScoreValue = document.getElementById("zScoreValue");
      const riskBadge = document.getElementById("riskBadge");
      const riskExplanation = document.getElementById("riskExplanation");
      const x1Detail = document.getElementById("x1Detail");
      const x2Detail = document.getElementById("x2Detail");
      const x3Detail = document.getElementById("x3Detail");
      const x4Detail = document.getElementById("x4Detail");
      const x5Detail = document.getElementById("x5Detail");

      let inputMode = "raw"; // 'raw' or 'ratios'

      function updateModelUI() {
        const model = modelSelect.value;
        if (model === "z") {
          salesContainer.classList.remove("hidden");
          x5Container.classList.remove("hidden");
          x5DetailRow.classList.remove("hidden");
          equityHint.textContent =
            "Z: Market value of equity (shares × price). Z’, Z’’: Book value of equity.";
          modelHint.textContent =
            "Z: uses market value of equity. Z’: uses book value of equity. Z’’: removes Sales/Assets term.";
        } else if (model === "zPrime") {
          salesContainer.classList.remove("hidden");
          x5Container.classList.remove("hidden");
          x5DetailRow.classList.remove("hidden");
          equityHint.textContent =
            "Use book value of equity (shareholders’ equity from balance sheet).";
          modelHint.textContent =
            "Z’: private manufacturing – uses book value of equity and adjusted coefficients.";
        } else {
          // zDoublePrime
          salesContainer.classList.add("hidden");
          x5Container.classList.add("hidden");
          x5DetailRow.classList.add("hidden");
          equityHint.textContent =
            "Use book value of equity (shareholders’ equity from balance sheet).";
          modelHint.textContent =
            "Z’’: non-manufacturing / emerging markets – Sales/Assets term is omitted.";
        }
      }

      modelSelect.addEventListener("change", updateModelUI);
      updateModelUI();

      // Input mode toggle
      modeRawBtn.addEventListener("click", () => {
        inputMode = "raw";
        rawForm.classList.remove("hidden");
        ratiosForm.classList.add("hidden");
        modeRawBtn.classList.remove(
          "border-gray-300",
          "text-gray-700",
          "bg-gray-100"
        );
        modeRawBtn.classList.add(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeRatiosBtn.classList.remove(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeRatiosBtn.classList.add(
          "border-gray-300",
          "text-gray-700",
          "bg-gray-100"
        );
      });

      modeRatiosBtn.addEventListener("click", () => {
        inputMode = "ratios";
        rawForm.classList.add("hidden");
        ratiosForm.classList.remove("hidden");
        modeRatiosBtn.classList.remove(
          "border-gray-300",
          "text-gray-700",
          "bg-gray-100"
        );
        modeRatiosBtn.classList.add(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeRawBtn.classList.remove(
          "border-blue-600",
          "text-blue-600",
          "bg-blue-50"
        );
        modeRawBtn.classList.add(
          "border-gray-300",
          "text-gray-700",
          "bg-gray-100"
        );
      });

      function parseVal(id) {
        const el = document.getElementById(id);
        if (!el) return NaN;
        const v = parseFloat(el.value);
        return isNaN(v) ? NaN : v;
      }

      function computeRatiosFromRaw() {
        const wc = parseVal("wc");
        const ta = parseVal("ta");
        const re = parseVal("re");
        const ebit = parseVal("ebit");
        const equity = parseVal("equity");
        const tl = parseVal("tl");
        const sales = parseVal("sales");

        if (!isFinite(ta) || ta === 0 || !isFinite(tl) || tl === 0) {
          return null;
        }

        const x1 = wc / ta;
        const x2 = re / ta;
        const x3 = ebit / ta;
        const x4 = equity / tl;
        const x5 = isFinite(sales) ? sales / ta : NaN;

        return { x1, x2, x3, x4, x5 };
      }

      function computeZFromRatios(model, ratios) {
        const { x1, x2, x3, x4, x5 } = ratios;
        if (model === "z") {
          return 1.2 * x1 + 1.4 * x2 + 3.3 * x3 + 0.6 * x4 + 1.0 * x5;
        } else if (model === "zPrime") {
          return 0.717 * x1 + 0.847 * x2 + 3.107 * x3 + 0.42 * x4 + 0.998 * x5;
        } else {
          // zDoublePrime
          return 6.56 * x1 + 3.26 * x2 + 6.72 * x3 + 1.05 * x4;
        }
      }

      function getRiskInfo(model, z) {
        let zone = "";
        let explanation = "";

        if (model === "z") {
          if (z < 1.81) {
            zone = "Distress zone";
            explanation =
              "High estimated probability of financial distress or bankruptcy within the next 1–2 years.";
          } else if (z <= 2.99) {
            zone = "Grey zone";
            explanation =
              "Indeterminate risk. The firm is not clearly safe or distressed; further analysis is recommended.";
          } else {
            zone = "Safe zone";
            explanation =
              "Low estimated probability of bankruptcy based on the original Altman Z-Score model.";
          }
        } else if (model === "zPrime") {
          if (z < 1.23) {
            zone = "Distress zone";
            explanation =
              "High distress risk for a private manufacturing firm according to the Z’-Score thresholds.";
          } else if (z <= 2.9) {
            zone = "Grey zone";
            explanation =
              "Intermediate risk. Combine the Z’-Score with qualitative and cash flow analysis.";
          } else {
            zone = "Safe zone";
            explanation =
              "Low estimated bankruptcy risk for a private manufacturing firm.";
          }
        } else {
          // zDoublePrime
          if (z < 1.1) {
            zone = "Distress zone";
            explanation =
              "High distress risk for a non-manufacturing or emerging-market firm according to the Z’’-Score.";
          } else if (z <= 2.6) {
            zone = "Grey zone";
            explanation =
              "Intermediate risk. The firm warrants closer monitoring and additional metrics.";
          } else {
            zone = "Safe zone";
            explanation =
              "Low estimated bankruptcy risk for a non-manufacturing or emerging-market firm.";
          }
        }

        return { zone, explanation };
      }

      calculateBtn.addEventListener("click", () => {
        let ratios;

        if (inputMode === "raw") {
          ratios = computeRatiosFromRaw();
          if (!ratios) {
            alert(
              "Please enter valid Total Assets and Total Liabilities to compute the ratios."
            );
            return;
          }
        } else {
          const x1 = parseVal("x1");
          const x2 = parseVal("x2");
          const x3 = parseVal("x3");
          const x4 = parseVal("x4");
          const x5 = parseVal("x5");
          if (
            !isFinite(x1) ||
            !isFinite(x2) ||
            !isFinite(x3) ||
            !isFinite(x4)
          ) {
            alert("Please enter at least X1–X4 ratios.");
            return;
          }
          ratios = { x1, x2, x3, x4, x5 };
        }

        const model = modelSelect.value;
        if ((model === "z" || model === "zPrime") && !isFinite(ratios.x5)) {
          alert("Sales/Total Assets (X5) is required for the selected model.");
          return;
        }

        const z = computeZFromRatios(model, ratios);
        if (!isFinite(z)) {
          alert("Unable to compute Z-Score. Please check your inputs.");
          return;
        }

        const zRounded = Math.round(z * 100) / 100;
        zScoreValue.textContent = zRounded.toFixed(2);

        let modelLabel = "";
        if (model === "z")
          modelLabel = "Original Z-Score (Public manufacturing)";
        else if (model === "zPrime")
          modelLabel = "Z’-Score (Private manufacturing)";
        else modelLabel = "Z’’-Score (Non-manufacturing / Emerging markets)";
        resultModelLabel.textContent = modelLabel;

        const { zone, explanation } = getRiskInfo(model, z);
        riskBadge.textContent = zone;

        riskBadge.classList.remove(
          "bg-red-100",
          "text-red-800",
          "bg-yellow-100",
          "text-yellow-800",
          "bg-green-100",
          "text-green-800"
        );
        if (zone === "Distress zone") {
          riskBadge.classList.add("bg-red-100", "text-red-800");
        } else if (zone === "Grey zone") {
          riskBadge.classList.add("bg-yellow-100", "text-yellow-800");
        } else {
          riskBadge.classList.add("bg-green-100", "text-green-800");
        }

        riskExplanation.textContent = explanation;

        x1Detail.textContent = isFinite(ratios.x1) ? ratios.x1.toFixed(3) : "–";
        x2Detail.textContent = isFinite(ratios.x2) ? ratios.x2.toFixed(3) : "–";
        x3Detail.textContent = isFinite(ratios.x3) ? ratios.x3.toFixed(3) : "–";
        x4Detail.textContent = isFinite(ratios.x4) ? ratios.x4.toFixed(3) : "–";
        if (model === "z" || model === "zPrime") {
          x5Detail.textContent = isFinite(ratios.x5)
            ? ratios.x5.toFixed(3)
            : "–";
        }

        resultsSection.classList.remove("hidden");
        resultsSection.scrollIntoView({ behavior: "smooth", block: "start" });
      });

      resetBtn.addEventListener("click", () => {
        rawForm.reset();
        ratiosForm.reset();
        resultsSection.classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
