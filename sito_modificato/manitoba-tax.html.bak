    <script>
      // --- Tax model (illustrative, not official) ---

      const MB_BRACKETS_2024 = [
        { upTo: 36842, rate: 0.108 },
        { upTo: 79625, rate: 0.1275 },
        { upTo: Infinity, rate: 0.174 },
      ];

      const FED_BRACKETS_2024 = [
        { upTo: 55867, rate: 0.15 },
        { upTo: 111733, rate: 0.205 },
        { upTo: 173205, rate: 0.26 },
        { upTo: 246752, rate: 0.29 },
        { upTo: Infinity, rate: 0.33 },
      ];

      // Simple assumption: 2025 brackets indexed slightly upward (illustrative)
      const MB_BRACKETS_2025 = MB_BRACKETS_2024.map((b) => ({
        upTo: b.upTo === Infinity ? Infinity : Math.round(b.upTo * 1.02),
        rate: b.rate,
      }));
      const FED_BRACKETS_2025 = FED_BRACKETS_2024.map((b) => ({
        upTo: b.upTo === Infinity ? Infinity : Math.round(b.upTo * 1.02),
        rate: b.rate,
      }));

      const BASIC_PERSONAL_MB_2024 = 15360; // illustrative
      const BASIC_PERSONAL_MB_2025 = 15360 * 1.02;

      const BASIC_PERSONAL_FED_2024 = 15000; // illustrative
      const BASIC_PERSONAL_FED_2025 = 15000 * 1.02;

      function getYearConfig(year) {
        if (year === "2025") {
          return {
            mbBrackets: MB_BRACKETS_2025,
            fedBrackets: FED_BRACKETS_2025,
            basicMB: BASIC_PERSONAL_MB_2025,
            basicFed: BASIC_PERSONAL_FED_2025,
          };
        }
        return {
          mbBrackets: MB_BRACKETS_2024,
          fedBrackets: FED_BRACKETS_2024,
          basicMB: BASIC_PERSONAL_MB_2024,
          basicFed: BASIC_PERSONAL_FED_2024,
        };
      }

      function calcProgressiveTax(income, brackets) {
        let remaining = income;
        let lastLimit = 0;
        let tax = 0;
        const slices = [];

        for (const b of brackets) {
          if (remaining <= 0) break;
          const upper = b.upTo;
          const sliceIncome = Math.max(
            0,
            Math.min(
              remaining,
              upper === Infinity ? remaining : upper - lastLimit
            )
          );
          const sliceTax = sliceIncome * b.rate;
          tax += sliceTax;
          slices.push({
            from: lastLimit,
            to: upper,
            rate: b.rate,
            income: sliceIncome,
            tax: sliceTax,
          });
          remaining -= sliceIncome;
          lastLimit = upper;
        }
        return { tax, slices };
      }

      function formatCurrency(n) {
        if (!isFinite(n)) return "$0";
        return n.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(n) {
        if (!isFinite(n)) return "0%";
        return (n * 100).toFixed(1) + "%";
      }

      function renderBracketTable(tbodyId, slices) {
        const tbody = document.getElementById(tbodyId);
        tbody.innerHTML = "";
        slices.forEach((s) => {
          if (s.income <= 0) return;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1 border-b">
          ${s.from === 0 ? "$0" : formatCurrency(s.from + 1)} – ${
            s.to === Infinity ? "and up" : formatCurrency(s.to)
          }
        </td>
        <td class="px-3 py-1 border-b text-right">${formatPercent(s.rate)}</td>
        <td class="px-3 py-1 border-b text-right">${formatCurrency(s.tax)}</td>
      `;
          tbody.appendChild(tr);
        });
        if (!tbody.children.length) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="3" class="px-3 py-2 text-center text-gray-500">No tax payable at this income level.</td>`;
          tbody.appendChild(tr);
        }
      }

      function calculateIncomeTax() {
        const year = document.getElementById("tax-year").value;
        const cfg = getYearConfig(year);

        const income = Math.max(
          0,
          Number(document.getElementById("employment-income").value) || 0
        );
        const rrsp = Math.max(
          0,
          Number(document.getElementById("rrsp").value) || 0
        );
        const otherDed = Math.max(
          0,
          Number(document.getElementById("other-deductions").value) || 0
        );
        const addProvCredits = Math.max(
          0,
          Number(document.getElementById("nonref-prov").value) || 0
        );
        const addFedCredits = Math.max(
          0,
          Number(document.getElementById("nonref-fed").value) || 0
        );

        const taxable = Math.max(0, income - rrsp - otherDed);

        const mbRes = calcProgressiveTax(taxable, cfg.mbBrackets);
        const fedRes = calcProgressiveTax(taxable, cfg.fedBrackets);

        // Basic personal amounts as non‑refundable credits at lowest rate
        const mbCredit = cfg.basicMB * cfg.mbBrackets[0].rate + addProvCredits;
        const fedCredit =
          cfg.basicFed * cfg.fedBrackets[0].rate + addFedCredits;

        const mbTax = Math.max(0, mbRes.tax - mbCredit);
        const fedTax = Math.max(0, fedRes.tax - fedCredit);
        const totalTax = mbTax + fedTax;
        const afterTax = taxable - totalTax;

        const avgRate = taxable > 0 ? totalTax / taxable : 0;

        // Marginal rate: rate of last slice with income
        const lastMbSlice = mbRes.slices.findLast
          ? mbRes.slices.findLast((s) => s.income > 0)
          : mbRes.slices.filter((s) => s.income > 0).slice(-1)[0];
        const lastFedSlice = fedRes.slices.findLast
          ? fedRes.slices.findLast((s) => s.income > 0)
          : fedRes.slices.filter((s) => s.income > 0).slice(-1)[0];
        const marginalRate =
          (lastMbSlice ? lastMbSlice.rate : 0) +
          (lastFedSlice ? lastFedSlice.rate : 0);

        // Update summary
        document.getElementById("res-taxable-income").textContent =
          formatCurrency(taxable);
        document.getElementById("res-mb-tax").textContent =
          formatCurrency(mbTax);
        document.getElementById("res-fed-tax").textContent =
          formatCurrency(fedTax);
        document.getElementById("res-total-tax").textContent =
          formatCurrency(totalTax);
        document.getElementById("res-after-tax").textContent =
          formatCurrency(afterTax);
        document.getElementById("res-avg-rate").textContent =
          formatPercent(avgRate);
        document.getElementById("res-marginal-rate").textContent =
          formatPercent(marginalRate);

        // Render bracket tables
        renderBracketTable("mb-brackets-body", mbRes.slices);
        renderBracketTable("fed-brackets-body", fedRes.slices);
      }

      function calculateSalesTax() {
        const amount = Math.max(
          0,
          Number(document.getElementById("purchase-amount").value) || 0
        );
        const pstRate =
          Math.max(0, Number(document.getElementById("pst-rate").value) || 0) /
          100;
        const gstRate =
          Math.max(0, Number(document.getElementById("gst-rate").value) || 0) /
          100;

        const pst = amount * pstRate;
        const gst = amount * gstRate;
        const total = amount + pst + gst;

        document.getElementById("res-pst").textContent = formatCurrency(pst);
        document.getElementById("res-gst").textContent = formatCurrency(gst);
        document.getElementById("res-total-purchase").textContent =
          formatCurrency(total);
      }

      document
        .getElementById("calc-btn")
        .addEventListener("click", calculateIncomeTax);
      document
        .getElementById("sales-tax-btn")
        .addEventListener("click", calculateSalesTax);

      // Auto‑recalculate on input changes (debounced)
      [
        "employment-income",
        "rrsp",
        "other-deductions",
        "nonref-prov",
        "nonref-fed",
        "tax-year",
      ].forEach((id) => {
        document
          .getElementById(id)
          .addEventListener("change", calculateIncomeTax);
      });

      ["purchase-amount", "pst-rate", "gst-rate"].forEach((id) => {
        document
          .getElementById(id)
          .addEventListener("change", calculateSalesTax);
      });

      // Initial calculation
      calculateIncomeTax();
      calculateSalesTax();
    </script>

