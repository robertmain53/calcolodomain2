<script>
  // Utility functions
  const MM_PER_INCH = 25.4;
  const MILE_MM = 1609.344 * 1000; // mm in a mile

  function round(value, decimals = 2) {
    if (!isFinite(value)) return NaN;
    const factor = Math.pow(10, decimals);
    return Math.round(value * factor) / factor;
  }

  function parseTireSize(input) {
    if (!input) return null;
    const s = input.trim().toUpperCase();

    // P-metric: 225/65R17, 205/55ZR16, P225/60R16, etc.
    const metricRegex = /^(?:P)?\s*(\d{3})\s*\/\s*(\d{2})\s*R?Z?R?\s*(\d{2})$/i;
    const metricMatch = s.replace(/\s+/g, '').match(/^(?:P)?(\d{3})\/(\d{2})R?Z?R?(\d{2})$/i);
    if (metricMatch) {
      const widthMm = parseFloat(metricMatch[1]);
      const aspect = parseFloat(metricMatch[2]);
      const rimIn = parseFloat(metricMatch[3]);

      const sidewallMm = widthMm * (aspect / 100);
      const diameterMm = 2 * sidewallMm + rimIn * MM_PER_INCH;
      const circMm = Math.PI * diameterMm;
      const revsMile = MILE_MM / circMm;

      return {
        format: 'metric',
        widthMm,
        aspect,
        rimIn,
        sidewallMm,
        diameterMm,
        circMm,
        revsMile
      };
    }

    // Flotation: 31x10.50R15, 33X12.5R17, etc.
    const floatMatch = s.match(/^(\d{2,2}(?:\.\d+)?)\s*[Xx]\s*(\d{1,2}(?:\.\d+)?)\s*R?\s*(\d{2})$/);
    if (floatMatch) {
      const diaIn = parseFloat(floatMatch[1]);
      const widthIn = parseFloat(floatMatch[2]);
      const rimIn = parseFloat(floatMatch[3]);

      const diameterMm = diaIn * MM_PER_INCH;
      const widthMm = widthIn * MM_PER_INCH;
      const sidewallMm = (diameterMm - rimIn * MM_PER_INCH) / 2;
      const aspect = (sidewallMm / widthMm) * 100;
      const circMm = Math.PI * diameterMm;
      const revsMile = MILE_MM / circMm;

      return {
        format: 'flotation',
        widthMm,
        aspect,
        rimIn,
        sidewallMm,
        diameterMm,
        circMm,
        revsMile
      };
    }

    return null;
  }

  function updateDisplay(prefix, data) {
    const setText = (id, value, decimals = 2) => {
      const el = document.getElementById(prefix + id);
      if (!el) return;
      if (value == null || isNaN(value)) {
        el.textContent = '–';
      } else {
        el.textContent = decimals === 0 ? Math.round(value) : round(value, decimals);
      }
    };

    if (!data) {
      ['width-mm','width-in','aspect','rim-in','sidewall-mm','sidewall-in','diameter-mm','diameter-in','circ-mm','circ-in','revs-mile']
        .forEach(id => setText(id, null));
      return;
    }

    setText('width-mm', data.widthMm, 0);
    setText('width-in', data.widthMm / MM_PER_INCH, 2);
    setText('aspect', data.aspect, 1);
    setText('rim-in', data.rimIn, 1);
    setText('sidewall-mm', data.sidewallMm, 0);
    setText('sidewall-in', data.sidewallMm / MM_PER_INCH, 2);
    setText('diameter-mm', data.diameterMm, 0);
    setText('diameter-in', data.diameterMm / MM_PER_INCH, 2);
    setText('circ-mm', data.circMm, 0);
    setText('circ-in', data.circMm / MM_PER_INCH, 2);
    setText('revs-mile', data.revsMile, 0);
  }

  function updateDiff(current, next) {
    const setText = (id, value) => {
      const el = document.getElementById(id);
      if (!el) return;
      if (value == null || isNaN(value)) {
        el.textContent = '–';
      } else {
        el.textContent = value;
      }
    };

    if (!current || !next) {
      ['diff-diameter-abs','diff-diameter-pct','diff-width-abs','diff-width-pct','diff-sidewall-abs','diff-sidewall-pct']
        .forEach(id => setText(id, '–'));
      document.getElementById('fitment-note').textContent = 'Enter both tire sizes to see differences and fitment guidance.';
      return;
    }

    const diaDiffMm = next.diameterMm - current.diameterMm;
    const diaDiffPct = (diaDiffMm / current.diameterMm) * 100;
    const widthDiffMm = next.widthMm - current.widthMm;
    const widthDiffPct = (widthDiffMm / current.widthMm) * 100;
    const sideDiffMm = next.sidewallMm - current.sidewallMm;
    const sideDiffPct = (sideDiffMm / current.sidewallMm) * 100;

    setText('diff-diameter-abs', `${round(diaDiffMm / MM_PER_INCH, 2)} in`);
    setText('diff-diameter-pct', `${round(diaDiffPct, 2)} %`);
    setText('diff-width-abs', `${round(widthDiffMm / MM_PER_INCH, 2)} in`);
    setText('diff-width-pct', `${round(widthDiffPct, 2)} %`);
    setText('diff-sidewall-abs', `${round(sideDiffMm / MM_PER_INCH, 2)} in`);
    setText('diff-sidewall-pct', `${round(sideDiffPct, 2)} %`);

    const noteEl = document.getElementById('fitment-note');
    const absPct = Math.abs(diaDiffPct);
    if (absPct === 0) {
      noteEl.textContent = 'The new tire has the same overall diameter as the current tire. Speedometer and gearing will be unchanged.';
    } else if (absPct <= 3) {
      noteEl.textContent = `The new tire is ${round(diaDiffPct, 2)}% ${diaDiffPct > 0 ? 'larger' : 'smaller'} in diameter, which is within the commonly recommended ±3% range. Still verify clearance on your specific vehicle.`;
    } else if (absPct <= 8) {
      noteEl.textContent = `The new tire is ${round(diaDiffPct, 2)}% ${diaDiffPct > 0 ? 'larger' : 'smaller'} in diameter. This is outside the usual ±3% guideline and may affect ABS, traction control, and clearance. Professional advice is recommended.`;
    } else {
      noteEl.textContent = `Warning: the new tire is ${round(diaDiffPct, 2)}% ${diaDiffPct > 0 ? 'larger' : 'smaller'} in diameter. This is a major change and likely to cause speedometer error and fitment issues.`;
    }
  }

  function updateSpeed(current, next) {
    const indicatedInput = document.getElementById('indicated-speed');
    const unitSelect = document.getElementById('speed-unit');
    const actualEl = document.getElementById('actual-speed');
    const actualUnitEl = document.getElementById('actual-speed-unit');
    const errorEl = document.getElementById('speed-error');
    const noteEl = document.getElementById('speed-note');

    if (!current || !next) {
      actualEl.textContent = '–';
      errorEl.textContent = '–';
      noteEl.textContent = 'Enter both tire sizes to estimate speedometer error.';
      return;
    }

    const indicated = parseFloat(indicatedInput.value);
    if (!isFinite(indicated) || indicated <= 0) {
      actualEl.textContent = '–';
      errorEl.textContent = '–';
      noteEl.textContent = 'Enter a positive indicated speed to see speedometer error.';
      return;
    }

    const ratio = next.diameterMm / current.diameterMm;
    const actualSpeed = indicated * ratio;
    const errorPct = (actualSpeed / indicated - 1) * 100;

    actualEl.textContent = round(actualSpeed, 2);
    actualUnitEl.textContent = unitSelect.value === 'mph' ? 'mph' : 'km/h';
    errorEl.textContent = `${errorPct >= 0 ? '+' : ''}${round(errorPct, 2)} %`;

    if (Math.abs(errorPct) < 1) {
      noteEl.textContent = 'Speedometer error is under 1%, which is typically negligible.';
    } else {
      noteEl.textContent = `At an indicated ${indicated} ${unitSelect.value}, your actual speed would be about ${round(actualSpeed, 2)} ${unitSelect.value} with the new tire.`;
    }
  }

  function handleInputChange() {
    const currentInput = document.getElementById('current-size-input');
    const newInput = document.getElementById('new-size-input');
    const currentError = document.getElementById('current-parse-error');
    const newError = document.getElementById('new-parse-error');

    const currentData = parseTireSize(currentInput.value);
    const newData = parseTireSize(newInput.value);

    if (currentInput.value.trim() && !currentData) {
      currentError.textContent = 'Could not parse this tire size. Examples: 225/65R17, 205/55R16, 31x10.50R15.';
      currentError.classList.remove('hidden');
    } else {
      currentError.classList.add('hidden');
    }

    if (newInput.value.trim() && !newData) {
      newError.textContent = 'Could not parse this tire size. Examples: 245/60R18, 33x12.50R17.';
      newError.classList.remove('hidden');
    } else {
      newError.classList.add('hidden');
    }

    updateDisplay('current-', currentData);
    updateDisplay('new-', newData);
    updateDiff(currentData, newData);
    updateSpeed(currentData, newData);
  }

  document.addEventListener('DOMContentLoaded', () => {
    const inputs = [
      'current-size-input',
      'new-size-input',
      'indicated-speed',
      'speed-unit'
    ];
    inputs.forEach(id => {
      const el = document.getElementById(id);
      if (!el) return;
      el.addEventListener('input', handleInputChange);
      el.addEventListener('change', handleInputChange);
    });

    // Initialize with example values
    document.getElementById('current-size-input').value = '225/65R17';
    document.getElementById('new-size-input').value = '245/60R18';
    handleInputChange();
  });

  // Mobile menu script (from template)
  document.addEventListener('DOMContentLoaded', function () {
    const toggle = document.getElementById('mobile-menu-toggle');
    const menu = document.getElementById('mobile-menu');
    if (toggle && menu) {
      toggle.addEventListener('click', () => {
        const isHidden = menu.classList.contains('hidden');
        menu.classList.toggle('hidden', !isHidden);
        toggle.setAttribute('aria-expanded', String(isHidden));
      });
    }
  });
</script>

