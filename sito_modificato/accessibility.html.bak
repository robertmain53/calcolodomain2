      // Pre-fill lastUpdated with today's date
      (function () {
        const lastUpdated = document.getElementById("lastUpdated");
        if (lastUpdated && !lastUpdated.value) {
          const today = new Date();
          const yyyy = today.getFullYear();
          const mm = String(today.getMonth() + 1).padStart(2, "0");
          const dd = String(today.getDate()).padStart(2, "0");
          lastUpdated.value = yyyy + "-" + mm + "-" + dd;
        }
      })();

      function buildStandardsText(wcagLevel, region, refs) {
        let parts = [];

        if (wcagLevel === "wcag21AA") {
          parts.push(
            "the Web Content Accessibility Guidelines (WCAG) 2.1 level AA"
          );
        } else if (wcagLevel === "wcag21A") {
          parts.push(
            "the Web Content Accessibility Guidelines (WCAG) 2.1 level A"
          );
        } else if (wcagLevel === "wcag22AA") {
          parts.push(
            "the Web Content Accessibility Guidelines (WCAG) 2.2 level AA"
          );
        } else if (wcagLevel === "wcag22A") {
          parts.push(
            "the Web Content Accessibility Guidelines (WCAG) 2.2 level A"
          );
        } else if (wcagLevel === "wcag21AAA") {
          parts.push(
            "selected success criteria from WCAG 2.1 level AAA where feasible"
          );
        }

        if (refs.en301) {
          parts.push("the harmonized European standard EN 301 549");
        }
        if (refs.eaa) {
          parts.push("the European Accessibility Act (where applicable)");
        }
        if (refs.ada) {
          parts.push(
            "the principles of the Americans with Disabilities Act (ADA)"
          );
        }

        if (!parts.length) {
          return "relevant accessibility standards and best practices, including the Web Content Accessibility Guidelines (WCAG).";
        }

        let text = parts.join(", ");
        if (!text.endsWith(".")) text += ".";
        return text;
      }

      function buildStatusText(status) {
        if (status === "fully") {
          return "We believe that the digital properties covered by this statement are largely conformant with the standards mentioned below. This means that most content and functionality should be usable by people with a wide range of abilities, with only minor issues that do not significantly hinder overall use.";
        } else if (status === "partially") {
          return "The digital properties covered by this statement are partially conformant with the standards mentioned below. This means that while many key features are accessible, we are aware of some areas that do not yet fully meet the requirements and are working to improve them.";
        } else {
          return "At this time, the digital properties covered by this statement are not yet conformant with the standards mentioned below. We are in the process of assessing accessibility issues and planning improvements to progressively enhance the user experience for everyone.";
        }
      }

      function buildRegionEscalation(region) {
        if (region === "eu") {
          return "If you are not satisfied with our response, you may have the right to contact the relevant national enforcement body or ombudsman responsible for monitoring the implementation of web accessibility rules in your country.";
        } else if (region === "uk") {
          return "If you are not satisfied with our response, you can contact the Equality Advisory and Support Service (EASS) or the relevant national equality body for further advice.";
        } else if (region === "us") {
          return "Depending on your jurisdiction, you may also have the option to raise concerns with relevant public bodies or regulators responsible for enforcing disability rights and anti‑discrimination laws.";
        }
        return "Depending on your jurisdiction, you may also have the option to raise concerns with relevant public bodies or regulators responsible for enforcing accessibility and anti‑discrimination laws.";
      }

      function generateStatement() {
        const orgName =
          document.getElementById("orgName").value.trim() ||
          "[Organization name]";
        const siteName =
          document.getElementById("siteName").value.trim() ||
          "[Website / app name]";
        const siteUrl =
          document.getElementById("siteUrl").value.trim() ||
          "[https://example.com]";
        const region = document.getElementById("region").value;
        const wcagLevel = document.getElementById("wcagLevel").value;
        const status =
          (document.querySelector('input[name="status"]:checked') || {})
            .value || "partially";
        const contactEmail =
          document.getElementById("contactEmail").value.trim() ||
          "accessibility@example.com";
        const contactPhone = document
          .getElementById("contactPhone")
          .value.trim();
        const issues = document.getElementById("issues").value.trim();
        const improvements = document
          .getElementById("improvements")
          .value.trim();
        const feedbackUrl = document.getElementById("feedbackUrl").value.trim();
        const lastUpdated = document.getElementById("lastUpdated").value;

        const refs = {
          en301: document.getElementById("refEN301").checked,
          eaa: document.getElementById("refEAA").checked,
          ada: document.getElementById("refADA").checked,
          other: document.getElementById("refOtherLaw").checked,
        };

        const standardsText = buildStandardsText(wcagLevel, region, refs);
        const statusText = buildStatusText(status);
        const escalationText = buildRegionEscalation(region);

        let contactLines = `You can help us improve accessibility by contacting us if you encounter barriers on ${siteName}.\n\n`;
        contactLines += `Please contact us by email at: ${contactEmail}`;
        if (contactPhone) {
          contactLines += `\nYou can also reach us by phone at: ${contactPhone}`;
        }
        if (feedbackUrl) {
          contactLines += `\nYou may also use our feedback form: ${feedbackUrl}`;
        }

        let issuesSection = "";
        if (issues) {
          issuesSection = `\n\nKnown accessibility issues\n--------------------------\nThe following issues are known and are being monitored or addressed:\n\n${issues}\n\nThis list is not exhaustive. If you find a problem that is not mentioned here, please let us know.`;
        } else {
          issuesSection = `\n\nKnown accessibility issues\n--------------------------\nWe are not currently aware of major accessibility barriers, but we recognize that no digital service is ever perfectly accessible for everyone. If you experience any difficulty using ${siteName}, please contact us so we can investigate and address the issue where possible.`;
        }

        let improvementsSection = "";
        if (improvements) {
          improvementsSection = `\n\nPlanned improvements\n---------------------\nWe are actively working on the following improvements:\n\n${improvements}`;
        } else {
          improvementsSection = `\n\nPlanned improvements\n---------------------\nWe are committed to continuous improvement. Accessibility is considered in our design, development and content workflows, and we periodically review our digital properties against current standards and user feedback.`;
        }

        let assessmentSection = `\n\nHow we test and assess accessibility\n------------------------------------\nWe use a combination of the following methods to assess the accessibility of ${siteName}:\n\n- Manual checks based on WCAG success criteria\n- Automated testing tools to detect common issues\n- Internal reviews of new features and templates\n\nWhere possible, we also consider feedback from real users, including people with disabilities.`;

        let legalSection = "";
        if (
          refs.en301 ||
          refs.eaa ||
          refs.ada ||
          refs.other ||
          region !== "none"
        ) {
          legalSection = `\n\nLegal framework\n----------------\nOur approach to accessibility is informed by the following standards and legal frameworks:\n\n- ${standardsText}`;
          if (refs.other) {
            legalSection +=
              "\n- Other applicable national or sector‑specific accessibility and anti‑discrimination laws.";
          }
        }

        let escalationSection = `\n\nEnforcement and escalation\n---------------------------\n${escalationText}`;

        let updatedLine = "";
        if (lastUpdated) {
          updatedLine = `\n\nThis accessibility statement was last updated on: ${lastUpdated}.`;
        }

        const statement = `${siteName} – Accessibility Statement
====================================

${orgName} is committed to providing a digital experience that is accessible and usable for as many people as possible. This accessibility statement applies to: ${siteName} (${siteUrl}).

Standards and level of accessibility
------------------------------------
Our goal is to make ${siteName} conformant with ${standardsText}

Current level of conformance
----------------------------
${statusText}

We understand that accessibility is an ongoing process and not a one‑time effort. We are committed to monitoring and improving accessibility over time.

${issuesSection}
${improvementsSection}
${assessmentSection}

Feedback and contact information
--------------------------------
${contactLines}

When you contact us, please, where possible, include:

- The URL of the page or feature where you experienced the problem
- A brief description of the issue
- The browser, operating system and any assistive technology you were using

We aim to respond to accessibility‑related requests within a reasonable timeframe and to propose an accessible alternative where a quick fix is not possible.

${legalSection}
${escalationSection}
${updatedLine}

Disclaimer
----------
This accessibility statement was generated with the help of an online template and then adapted to the specific context of ${orgName}. While we strive for accuracy, this document does not in itself guarantee legal compliance.`;

        document.getElementById("statementOutput").value = statement;
        const statusEl = document.getElementById("copyStatus");
        if (statusEl) {
          statusEl.classList.add("hidden");
        }
      }

      document
        .getElementById("generateBtn")
        .addEventListener("click", generateStatement);

      document.getElementById("copyBtn").addEventListener("click", function () {
        const output = document.getElementById("statementOutput");
        if (!output.value) {
          generateStatement();
        }
        output.select();
        output.setSelectionRange(0, 99999);
        let success = false;
        try {
          success = document.execCommand("copy");
        } catch (e) {
          success = false;
        }
        const statusEl = document.getElementById("copyStatus");
        if (statusEl) {
          if (success) {
            statusEl.textContent = "Statement copied to clipboard.";
            statusEl.classList.remove("hidden");
            statusEl.classList.remove("text-red-600");
            statusEl.classList.add("text-green-600");
          } else {
            statusEl.textContent =
              "Unable to copy automatically. Please select and copy the text manually.";
            statusEl.classList.remove("hidden");
            statusEl.classList.remove("text-green-600");
            statusEl.classList.add("text-red-600");
          }
        }
      });

      // Generate an initial default statement on load
      document.addEventListener("DOMContentLoaded", generateStatement);
    </script>

