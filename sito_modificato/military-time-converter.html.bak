<script>
  // Tab switching
  const tabMil = document.getElementById('tab-mil-to-std');
  const tabStd = document.getElementById('tab-std-to-mil');
  const panelMil = document.getElementById('panel-mil-to-std');
  const panelStd = document.getElementById('panel-std-to-mil');

  function activateTab(which) {
    if (which === 'mil') {
      tabMil.classList.add('tab-active');
      tabStd.classList.remove('tab-active');
      panelMil.classList.remove('hidden');
      panelStd.classList.add('hidden');
    } else {
      tabStd.classList.add('tab-active');
      tabMil.classList.remove('tab-active');
      panelStd.classList.remove('hidden');
      panelMil.classList.add('hidden');
    }
  }
  tabMil.addEventListener('click', () => activateTab('mil'));
  tabStd.addEventListener('click', () => activateTab('std'));

  // Helpers
  function pad2(n) { return n.toString().padStart(2, '0'); }

  function parseMilitary(str) {
    if (!str) return null;
    const cleaned = str.replace(/[^0-9]/g, '');
    if (!/^\d{3,4}$/.test(cleaned)) return null;
    const val = cleaned.length === 3 ? '0' + cleaned : cleaned;
    const h = parseInt(val.slice(0, 2), 10);
    const m = parseInt(val.slice(2), 10);
    if (h < 0 || h > 23 || m < 0 || m > 59) return null;
    return { h, m };
  }

  function militaryToStandard(h, m) {
    let period = 'AM';
    let hour12 = h;
    if (h === 0) {
      hour12 = 12;
      period = 'AM';
    } else if (h === 12) {
      hour12 = 12;
      period = 'PM';
    } else if (h > 12) {
      hour12 = h - 12;
      period = 'PM';
    } else {
      period = 'AM';
    }
    return hour12 + ':' + pad2(m) + ' ' + period;
  }

  function standardToMilitary(h, m, period) {
    if (h < 1 || h > 12 || m < 0 || m > 59) return null;
    let H = h;
    const p = period.toUpperCase();
    if (p === 'AM') {
      if (h === 12) H = 0;
    } else if (p === 'PM') {
      if (h !== 12) H = h + 12;
    } else {
      return null;
    }
    return pad2(H) + pad2(m);
  }

  // Single converters
  const milInput = document.getElementById('mil-input');
  const milOutput = document.getElementById('mil-output');
  const milError = document.getElementById('mil-error');
  const btnNowMil = document.getElementById('btn-now-mil');

  function updateMil() {
    const parsed = parseMilitary(milInput.value.trim());
    if (!milInput.value.trim()) {
      milOutput.textContent = '—';
      milError.classList.add('hidden');
      return;
    }
    if (!parsed) {
      milOutput.textContent = '—';
      milError.textContent = 'Please enter a valid military time between 0000 and 2359.';
      milError.classList.remove('hidden');
      return;
    }
    milError.classList.add('hidden');
    milOutput.textContent = militaryToStandard(parsed.h, parsed.m);
  }

  milInput.addEventListener('input', updateMil);
  btnNowMil.addEventListener('click', () => {
    const now = new Date();
    const h = now.getHours();
    const m = now.getMinutes();
    milInput.value = pad2(h) + pad2(m);
    updateMil();
  });

  const stdHour = document.getElementById('std-hour');
  const stdMinute = document.getElementById('std-minute');
  const stdOutput = document.getElementById('std-output');
  const stdError = document.getElementById('std-error');
  const btnNowStd = document.getElementById('btn-now-std');

  function getStdPeriod() {
    const radios = document.querySelectorAll('input[name="std-ampm"]');
    for (const r of radios) if (r.checked) return r.value;
    return 'AM';
  }

  function updateStd() {
    const h = parseInt(stdHour.value, 10);
    const m = parseInt(stdMinute.value, 10);
    if (isNaN(h) || isNaN(m)) {
      stdOutput.textContent = '—';
      stdError.classList.add('hidden');
      return;
    }
    if (h < 1 || h > 12 || m < 0 || m > 59) {
      stdOutput.textContent = '—';
      stdError.textContent = 'Hour must be 1–12 and minutes 0–59.';
      stdError.classList.remove('hidden');
      return;
    }
    const res = standardToMilitary(h, m, getStdPeriod());
    if (!res) {
      stdOutput.textContent = '—';
      stdError.textContent = 'Invalid AM/PM selection.';
      stdError.classList.remove('hidden');
      return;
    }
    stdError.classList.add('hidden');
    stdOutput.textContent = res;
  }

  stdHour.addEventListener('input', updateStd);
  stdMinute.addEventListener('input', updateStd);
  document.querySelectorAll('input[name="std-ampm"]').forEach(r => r.addEventListener('change', updateStd));

  btnNowStd.addEventListener('click', () => {
    const now = new Date();
    let h = now.getHours();
    const m = now.getMinutes();
    let period = 'AM';
    if (h === 0) {
      h = 12;
      period = 'AM';
    } else if (h === 12) {
      period = 'PM';
    } else if (h > 12) {
      h = h - 12;
      period = 'PM';
    }
    stdHour.value = h;
    stdMinute.value = m;
    document.querySelectorAll('input[name="std-ampm"]').forEach(r => {
      r.checked = (r.value === period);
    });
    updateStd();
  });

  // Bulk converter
  const bulkInput = document.getElementById('bulk-input');
  const bulkOutput = document.getElementById('bulk-output');
  const bulkMode = document.getElementById('bulk-mode');
  const bulkConvert = document.getElementById('bulk-convert');
  const bulkCopy = document.getElementById('bulk-copy');
  const bulkCopyMsg = document.getElementById('bulk-copy-msg');

  function detectFormat(token) {
    const t = token.trim();
    if (!t) return null;
    if (/[aApP][mM]\b/.test(t)) return 'std';
    if (/^\d{3,4}$/.test(t.replace(/[^0-9]/g, '')) || /^\d{1,2}:\d{2}$/.test(t)) return 'mil';
    return 'std';
  }

  function parseStandard(str) {
    const s = str.trim().toUpperCase();
    const match = /^(\d{1,2})\s*:\s*(\d{1,2})\s*(AM|PM)$/.exec(s);
    if (!match) return null;
    const h = parseInt(match[1], 10);
    const m = parseInt(match[2], 10);
    const period = match[3];
    if (h < 1 || h > 12 || m < 0 || m > 59) return null;
    return { h, m, period };
  }

  bulkConvert.addEventListener('click', () => {
    const lines = bulkInput.value.split(/\r?\n/);
    const mode = bulkMode.value;
    const out = lines.map(line => {
      const trimmed = line.trim();
      if (!trimmed) return '';
      let fmt = detectFormat(trimmed);
      if (mode === 'mil') fmt = 'std';
      if (mode === 'std') fmt = 'mil';

      if (fmt === 'mil') {
        const parsed = parseMilitary(trimmed);
        if (!parsed) return 'Invalid';
        if (mode === 'std' || mode === 'auto') {
          return militaryToStandard(parsed.h, parsed.m);
        } else {
          return pad2(parsed.h) + pad2(parsed.m);
        }
      } else {
        const cleaned = trimmed.replace(/\./g, '').replace(/\s+/g, ' ');
        let s = cleaned.toUpperCase();
        if (!/[AP]M$/.test(s)) {
          // try to infer AM/PM if missing; default to AM
          s += ' AM';
        }
        const parsed = parseStandard(s);
        if (!parsed) return 'Invalid';
        const mil = standardToMilitary(parsed.h, parsed.m, parsed.period);
        if (!mil) return 'Invalid';
        if (mode === 'mil' || mode === 'auto') {
          return mil;
        } else {
          return militaryToStandard(parseInt(mil.slice(0, 2), 10), parseInt(mil.slice(2), 10));
        }
      }
    });
    bulkOutput.value = out.join('\n');
  });

  bulkCopy.addEventListener('click', () => {
    bulkOutput.select();
    try {
      document.execCommand('copy');
      bulkCopyMsg.classList.remove('hidden');
      setTimeout(() => bulkCopyMsg.classList.add('hidden'), 1500);
    } catch (e) {
      bulkCopyMsg.classList.add('hidden');
    }
  });

  // Chart generation: every 30 minutes
  const chartBody = document.getElementById('chart-body');
  (function buildChart() {
    let rowsHtml = '';
    for (let h = 0; h < 24; h++) {
      for (let m = 0; m < 60; m += 30) {
        const mil = pad2(h) + pad2(m);
        const std = militaryToStandard(h, m);
        // two columns per row: fill left/right alternately
        if ((h * 2 + m / 30) % 2 === 0) {
          rowsHtml += '<tr><td class="px-3 py-1.5">' + mil + '</td><td class="px-3 py-1.5">' + std + '</td>';
        } else {
          rowsHtml += '<td class="px-3 py-1.5">' + mil + '</td><td class="px-3 py-1.5">' + std + '</td></tr>';
        }
      }
    }
    // Ensure even number of cells
    if (!rowsHtml.endsWith('</tr>')) rowsHtml += '<td></td><td></td></tr>';
    chartBody.innerHTML = rowsHtml;
  })();
</script>

