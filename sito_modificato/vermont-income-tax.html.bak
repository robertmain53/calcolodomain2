    <script>
      // Vermont tax brackets model (approximate, for educational use)
      // Thresholds differ by filing status via multipliers.
      const VT_BRACKETS_BASE = [
        { upTo: 45000, rate: 0.0335 },
        { upTo: 110000, rate: 0.066 },
        { upTo: 200000, rate: 0.076 },
        { upTo: Infinity, rate: 0.0875 },
      ];

      const STATUS_MULTIPLIERS = {
        single: 1,
        mfj: 2, // married filing jointly
        mfs: 1, // married filing separately
        hoh: 1.5, // head of household (approx)
      };

      // Simple standard deduction model (not official VT values)
      const STANDARD_DEDUCTION = {
        single: 13000,
        mfj: 26000,
        mfs: 13000,
        hoh: 19500,
      };

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function buildBracketsForStatus(status) {
        const mult = STATUS_MULTIPLIERS[status] || 1;
        let lower = 0;
        return VT_BRACKETS_BASE.map((b) => {
          const upper = isFinite(b.upTo) ? b.upTo * mult : Infinity;
          const bracket = { lower, upper, rate: b.rate };
          lower = upper;
          return bracket;
        });
      }

      function computeVermontTax({
        income,
        filingStatus,
        deductionType,
        itemizedAmount,
        credits,
      }) {
        const brackets = buildBracketsForStatus(filingStatus);

        let deduction = 0;
        if (deductionType === "standard") {
          deduction =
            STANDARD_DEDUCTION[filingStatus] || STANDARD_DEDUCTION.single;
        } else if (deductionType === "itemized") {
          deduction = Math.max(0, itemizedAmount || 0);
        }

        const taxable = Math.max(0, income - deduction);
        let taxBeforeCredits = 0;
        let marginalRate = 0;
        const breakdown = [];

        for (const b of brackets) {
          if (taxable <= b.lower) {
            breakdown.push({
              range: [b.lower, b.upper],
              amount: 0,
              rate: b.rate,
            });
            continue;
          }
          const taxedAmount = Math.min(taxable, b.upper) - b.lower;
          const taxHere = taxedAmount * b.rate;
          taxBeforeCredits += taxHere;
          if (taxedAmount > 0) {
            marginalRate = b.rate;
          }
          breakdown.push({
            range: [b.lower, b.upper],
            amount: taxedAmount,
            rate: b.rate,
            tax: taxHere,
          });
          if (taxable <= b.upper) break;
        }

        const taxAfterCredits = Math.max(0, taxBeforeCredits - credits);
        const effectiveRate = taxable > 0 ? taxAfterCredits / taxable : 0;

        return {
          originalIncome: income,
          deduction,
          taxable,
          taxBeforeCredits,
          taxAfterCredits,
          credits,
          effectiveRate,
          marginalRate,
          breakdown,
        };
      }

      document.addEventListener("DOMContentLoaded", () => {
        const incomeInput = document.getElementById("vt-agi");
        const filingStatusInput = document.getElementById("filing-status");
        const deductionTypeInput = document.getElementById("deduction-type");
        const itemizedWrapper = document.getElementById("itemized-wrapper");
        const itemizedAmountInput = document.getElementById("itemized-amount");
        const creditsInput = document.getElementById("tax-credits");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const warningEl = document.getElementById("calc-warning");

        const resultsSection = document.getElementById("results-section");
        const resultTax = document.getElementById("result-tax");
        const resultEffectiveRate = document.getElementById(
          "result-effective-rate"
        );
        const resultMarginalRate = document.getElementById(
          "result-marginal-rate"
        );
        const resultTaxable = document.getElementById("result-taxable");
        const resultOriginalIncome = document.getElementById(
          "result-original-income"
        );
        const resultDeductions = document.getElementById("result-deductions");
        const resultCredits = document.getElementById("result-credits");
        const bracketBreakdown = document.getElementById("bracket-breakdown");

        deductionTypeInput.addEventListener("change", () => {
          if (deductionTypeInput.value === "itemized") {
            itemizedWrapper.classList.remove("hidden");
          } else {
            itemizedWrapper.classList.add("hidden");
          }
        });

        function renderBreakdown(breakdown) {
          bracketBreakdown.innerHTML = "";
          breakdown.forEach((b, idx) => {
            const lower = b.range[0];
            const upper = b.range[1];
            const rangeLabel = isFinite(upper)
              ? `${formatCurrency(lower)} – ${formatCurrency(upper)}`
              : `${formatCurrency(lower)} and above`;

            const line = document.createElement("div");
            line.className =
              "flex justify-between items-baseline border-b border-gray-100 py-1";
            line.innerHTML = `
          <div>
            <div class="text-xs text-gray-500">Bracket ${
              idx + 1
            }: ${rangeLabel}</div>
            <div class="text-xs text-gray-500">Taxed at ${formatPercent(
              b.rate
            )}</div>
          </div>
          <div class="text-right">
            <div class="text-sm font-medium text-gray-800">${formatCurrency(
              b.tax || 0
            )}</div>
            <div class="text-xs text-gray-500">${formatCurrency(
              b.amount || 0
            )} of income</div>
          </div>
        `;
            bracketBreakdown.appendChild(line);
          });
        }

        function calculateAndRender() {
          const income = Math.max(0, Number(incomeInput.value) || 0);
          const filingStatus = filingStatusInput.value;
          const deductionType = deductionTypeInput.value;
          const itemizedAmount = Math.max(
            0,
            Number(itemizedAmountInput.value) || 0
          );
          const credits = Math.max(0, Number(creditsInput.value) || 0);

          const result = computeVermontTax({
            income,
            filingStatus,
            deductionType,
            itemizedAmount,
            credits,
          });

          resultTax.textContent = formatCurrency(result.taxAfterCredits);
          resultEffectiveRate.textContent = formatPercent(result.effectiveRate);
          resultMarginalRate.textContent = formatPercent(result.marginalRate);
          resultTaxable.textContent = formatCurrency(result.taxable);
          resultOriginalIncome.textContent = formatCurrency(
            result.originalIncome
          );
          resultDeductions.textContent = formatCurrency(result.deduction);
          resultCredits.textContent = formatCurrency(result.credits);

          renderBreakdown(result.breakdown);
          resultsSection.classList.remove("hidden");
          warningEl.classList.remove("hidden");
        }

        calcBtn.addEventListener("click", (e) => {
          e.preventDefault();
          calculateAndRender();
        });

        resetBtn.addEventListener("click", (e) => {
          e.preventDefault();
          document.getElementById("tax-year").value = "2024";
          filingStatusInput.value = "single";
          incomeInput.value = 60000;
          deductionTypeInput.value = "standard";
          itemizedAmountInput.value = 15000;
          creditsInput.value = 0;
          itemizedWrapper.classList.add("hidden");
          resultsSection.classList.add("hidden");
          warningEl.classList.add("hidden");
        });

        // Initial quick calculation
        calculateAndRender();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
