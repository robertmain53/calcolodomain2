    <script>
      // Physical constants
      const C_MS = 299792458; // speed of light in m/s
      const MPC_IN_M = 3.0856775814913673e22;
      const KPC_IN_M = 3.085677581491367e19;
      const PC_IN_M = 3.085677581491367e16;
      const LY_IN_M = 9.4607304725808e15;
      const SEC_IN_GYR = 3.1536e16; // ~1 Gyr in seconds

      const modeButtons = {
        velocity: document.getElementById("mode-velocity"),
        distance: document.getElementById("mode-distance"),
        redshift: document.getElementById("mode-redshift"),
      };

      let currentMode = "velocity";

      function setMode(mode) {
        currentMode = mode;
        Object.keys(modeButtons).forEach((key) => {
          if (key === mode) {
            modeButtons[key].classList.add("toggle-btn-active");
          } else {
            modeButtons[key].classList.remove("toggle-btn-active");
          }
        });

        const velocityReq = document.getElementById("velocity-required");
        const distanceReq = document.getElementById("distance-required");
        const redshiftReq = document.getElementById("redshift-required");

        velocityReq.textContent = "(output)";
        distanceReq.textContent = "(input)";
        redshiftReq.textContent = "(output)";

        if (mode === "velocity") {
          distanceReq.textContent = "(input)";
          velocityReq.textContent = "(output)";
          redshiftReq.textContent = "(output)";
        } else if (mode === "distance") {
          distanceReq.textContent = "(output)";
          velocityReq.textContent = "(input)";
          redshiftReq.textContent = "(output)";
        } else if (mode === "redshift") {
          redshiftReq.textContent = "(input)";
          // user can choose to input either v or d, but we mark z as primary input
        }
      }

      modeButtons.velocity.addEventListener("click", () => setMode("velocity"));
      modeButtons.distance.addEventListener("click", () => setMode("distance"));
      modeButtons.redshift.addEventListener("click", () => setMode("redshift"));

      function h0ToSI(h0Value, h0Unit) {
        if (!isFinite(h0Value) || h0Value <= 0) return null;
        if (h0Unit === "km_s_Mpc") {
          const v_ms = h0Value * 1000;
          return v_ms / MPC_IN_M;
        } else if (h0Unit === "km_s_kpc") {
          const v_ms = h0Value * 1000;
          return v_ms / KPC_IN_M;
        } else if (h0Unit === "s_inv") {
          return h0Value;
        }
        return null;
      }

      function distanceToMeters(dValue, dUnit) {
        if (!isFinite(dValue)) return null;
        switch (dUnit) {
          case "Mpc":
            return dValue * MPC_IN_M;
          case "kpc":
            return dValue * KPC_IN_M;
          case "pc":
            return dValue * PC_IN_M;
          case "ly":
            return dValue * LY_IN_M;
          default:
            return null;
        }
      }

      function metersToDistanceUnits(dMeters, dUnit) {
        switch (dUnit) {
          case "Mpc":
            return dMeters / MPC_IN_M;
          case "kpc":
            return dMeters / KPC_IN_M;
          case "pc":
            return dMeters / PC_IN_M;
          case "ly":
            return dMeters / LY_IN_M;
          default:
            return null;
        }
      }

      function velocityToMS(vValue, vUnit) {
        if (!isFinite(vValue)) return null;
        switch (vUnit) {
          case "km_s":
            return vValue * 1000;
          case "m_s":
            return vValue;
          case "c_frac":
            return vValue * C_MS;
          default:
            return null;
        }
      }

      function msToVelocityUnits(vMs, vUnit) {
        switch (vUnit) {
          case "km_s":
            return vMs / 1000;
          case "m_s":
            return vMs;
          case "c_frac":
            return vMs / C_MS;
          default:
            return null;
        }
      }

      function formatNumber(x, digits = 4) {
        if (!isFinite(x)) return "—";
        if (Math.abs(x) >= 1e4 || (Math.abs(x) < 1e-3 && x !== 0)) {
          return x.toExponential(digits - 1);
        }
        return x.toFixed(digits);
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const h0Val = parseFloat(document.getElementById("h0-value").value);
        const h0Unit = document.getElementById("h0-unit").value;
        const h0SI = h0ToSI(h0Val, h0Unit);

        const dInput = parseFloat(
          document.getElementById("distance-value").value
        );
        const dUnit = document.getElementById("distance-unit").value;
        const vInput = parseFloat(
          document.getElementById("velocity-value").value
        );
        const vUnit = document.getElementById("velocity-unit").value;
        const zInput = parseFloat(
          document.getElementById("redshift-value").value
        );

        const primaryResultEl = document.getElementById("primary-result");
        const dvEl = document.getElementById("derived-velocity");
        const ddEl = document.getElementById("derived-distance");
        const dzEl = document.getElementById("derived-redshift");
        const dtEl = document.getElementById("derived-lookback");
        const validityNoteEl = document.getElementById("validity-note");
        const resultsSection = document.getElementById("results-section");

        if (!h0SI) {
          alert("Please enter a positive H₀ value.");
          return;
        }

        let vMs = NaN;
        let dMeters = NaN;
        let z = NaN;

        if (currentMode === "velocity") {
          dMeters = distanceToMeters(dInput, dUnit);
          if (!isFinite(dMeters)) {
            alert("Please enter a valid distance.");
            return;
          }
          vMs = h0SI * dMeters;
          z = vMs / C_MS;
          primaryResultEl.textContent = `v ≈ ${formatNumber(
            msToVelocityUnits(vMs, vUnit)
          )} ${vUnit.replace("_", "/").replace("c_frac", "c")}`;
        } else if (currentMode === "distance") {
          vMs = velocityToMS(vInput, vUnit);
          if (!isFinite(vMs)) {
            alert("Please enter a valid velocity.");
            return;
          }
          dMeters = vMs / h0SI;
          z = vMs / C_MS;
          primaryResultEl.textContent = `d ≈ ${formatNumber(
            metersToDistanceUnits(dMeters, dUnit)
          )} ${dUnit}`;
        } else if (currentMode === "redshift") {
          if (!isFinite(zInput) || zInput < 0) {
            alert("Please enter a valid non‑negative redshift z.");
            return;
          }
          z = zInput;
          vMs = z * C_MS;
          dMeters = vMs / h0SI;
          primaryResultEl.textContent = `z = ${formatNumber(z, 6)}`;
        }

        const vUser = msToVelocityUnits(vMs, vUnit);
        const dUser = metersToDistanceUnits(dMeters, dUnit);
        const lookbackSec = z / h0SI;
        const lookbackGyr = lookbackSec / SEC_IN_GYR;

        dvEl.textContent = `Recession velocity v ≈ ${formatNumber(
          vUser
        )} ${vUnit.replace("_", "/").replace("c_frac", "c")}`;
        ddEl.textContent = `Distance d ≈ ${formatNumber(dUser)} ${dUnit}`;
        dzEl.textContent = `Redshift z ≈ ${formatNumber(z, 6)}`;
        dtEl.textContent = `Approx. lookback time ≈ ${formatNumber(
          lookbackGyr,
          3
        )} billion years (small‑z estimate)`;

        if (z > 0.2) {
          validityNoteEl.textContent =
            "Note: z is relatively large; Hubble’s law and the simple z ≈ v/c approximation become inaccurate. Use a full cosmology calculator for precise distances and ages.";
        } else {
          validityNoteEl.textContent =
            "This result uses the linear Hubble’s law and the small‑z approximation v ≈ z·c, which are reasonable for nearby galaxies (z ≲ 0.1–0.2).";
        }

        resultsSection.classList.remove("hidden");
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        document.getElementById("h0-value").value = 70;
        document.getElementById("h0-unit").value = "km_s_Mpc";
        document.getElementById("distance-value").value = 100;
        document.getElementById("distance-unit").value = "Mpc";
        document.getElementById("velocity-value").value = "";
        document.getElementById("velocity-unit").value = "km_s";
        document.getElementById("redshift-value").value = "";
        setMode("velocity");
        document.getElementById("results-section").classList.add("hidden");
      });

      // Initialize default mode
      setMode("velocity");

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
