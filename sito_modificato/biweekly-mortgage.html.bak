    <script>
      // Utility functions
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" +
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }
      function fmtDate(date) {
        if (!(date instanceof Date) || isNaN(date)) return "–";
        return date.toLocaleDateString(undefined, {
          year: "numeric",
          month: "short",
        });
      }
      function monthsDiff(start, end) {
        return (
          (end.getFullYear() - start.getFullYear()) * 12 +
          (end.getMonth() - start.getMonth())
        );
      }
      function addMonths(date, months) {
        const d = new Date(date.getTime());
        const day = d.getDate();
        d.setMonth(d.getMonth() + months);
        if (d.getDate() < day) d.setDate(0);
        return d;
      }
      function addDays(date, days) {
        const d = new Date(date.getTime());
        d.setDate(d.getDate() + days);
        return d;
      }

      function buildSchedule({
        principal,
        annualRate,
        periodsPerYear,
        extraPerPeriod,
        startDate,
        maxPeriods,
      }) {
        const r = annualRate / 100 / periodsPerYear;
        let balance = principal;
        const n = maxPeriods;
        const payment =
          r === 0 ? principal / n : (principal * r) / (1 - Math.pow(1 + r, -n));
        const schedule = [];
        let totalInterest = 0;
        let date = new Date(startDate.getTime());

        for (let i = 1; i <= n && balance > 0.01; i++) {
          const interest = balance * r;
          let principalPaid = payment + extraPerPeriod - interest;
          if (principalPaid > balance) {
            principalPaid = balance;
          }
          const actualPayment = principalPaid + interest;
          balance -= principalPaid;
          totalInterest += interest;

          schedule.push({
            period: i,
            date: new Date(date.getTime()),
            payment: actualPayment,
            principal: principalPaid,
            interest: interest,
            balance: Math.max(balance, 0),
          });

          // advance date
          if (periodsPerYear === 12) {
            date = addMonths(date, 1);
          } else if (periodsPerYear === 26) {
            date = addDays(date, 14);
          }
        }

        return {
          payment,
          totalInterest,
          payoffDate: schedule.length
            ? schedule[schedule.length - 1].date
            : startDate,
          schedule,
        };
      }

      function calculateBiweekly() {
        const loanAmount =
          parseFloat(document.getElementById("loan-amount").value) || 0;
        const rate =
          parseFloat(document.getElementById("interest-rate").value) || 0;
        const termYears =
          parseInt(document.getElementById("term-years").value) || 0;
        const termMonths =
          parseInt(document.getElementById("term-months").value) || 0;
        const elapsedYears =
          parseInt(document.getElementById("elapsed-years").value) || 0;
        const elapsedMonths =
          parseInt(document.getElementById("elapsed-months").value) || 0;
        const extraMonthly =
          parseFloat(document.getElementById("extra-monthly").value) || 0;
        const extraBiweekly =
          parseFloat(document.getElementById("extra-biweekly").value) || 0;
        const startInput = document.getElementById("start-date").value;
        const today = new Date();
        const startDate = startInput ? new Date(startInput) : today;

        if (
          loanAmount <= 0 ||
          rate < 0 ||
          (termYears === 0 && termMonths === 0)
        ) {
          alert(
            "Please enter a positive loan amount, interest rate, and term."
          );
          return null;
        }

        const totalMonths = termYears * 12 + termMonths;
        const elapsedTotalMonths = Math.min(
          elapsedYears * 12 + elapsedMonths,
          totalMonths
        );
        const remainingMonths = totalMonths - elapsedTotalMonths || 1;

        const monthlyPlan = buildSchedule({
          principal: loanAmount,
          annualRate: rate,
          periodsPerYear: 12,
          extraPerPeriod: extraMonthly,
          startDate,
          maxPeriods: remainingMonths,
        });

        const remainingYearsApprox = remainingMonths / 12;
        const biweeklyPeriods = Math.round(remainingYearsApprox * 26);

        const biweeklyPlan = buildSchedule({
          principal: loanAmount,
          annualRate: rate,
          periodsPerYear: 26,
          extraPerPeriod: extraBiweekly,
          startDate,
          maxPeriods: biweeklyPeriods,
        });

        // Update summary
        document.getElementById("monthly-payment").textContent = fmtCurrency(
          monthlyPlan.payment + extraMonthly
        );
        document.getElementById("monthly-interest").textContent = fmtCurrency(
          monthlyPlan.totalInterest
        );
        document.getElementById("monthly-payoff").textContent = fmtDate(
          monthlyPlan.payoffDate
        );

        document.getElementById("biweekly-payment").textContent = fmtCurrency(
          biweeklyPlan.payment + extraBiweekly
        );
        document.getElementById("biweekly-interest").textContent = fmtCurrency(
          biweeklyPlan.totalInterest
        );
        document.getElementById("biweekly-payoff").textContent = fmtDate(
          biweeklyPlan.payoffDate
        );

        const interestSaved =
          monthlyPlan.totalInterest - biweeklyPlan.totalInterest;
        document.getElementById("interest-saved").textContent = fmtCurrency(
          interestSaved > 0 ? interestSaved : 0
        );

        const monthsSaved =
          monthsDiff(monthlyPlan.payoffDate, biweeklyPlan.payoffDate) * -1;
        const yearsPart = Math.floor(monthsSaved / 12);
        const monthsPart = monthsSaved % 12;
        let timeSavedText = "–";
        if (monthsSaved > 0) {
          const parts = [];
          if (yearsPart > 0)
            parts.push(yearsPart + " yr" + (yearsPart > 1 ? "s" : ""));
          if (monthsPart > 0) parts.push(monthsPart + " mo");
          timeSavedText = parts.join(" ");
        }
        document.getElementById("time-saved").textContent = timeSavedText;

        const extraPerYear = extraBiweekly * 26 + extraMonthly * 12;
        document.getElementById("extra-per-year").textContent =
          fmtCurrency(extraPerYear);

        // Store schedules for toggling
        window._biweeklyCalcData = {
          monthly: monthlyPlan.schedule,
          biweekly: biweeklyPlan.schedule,
        };
        renderAmortizationTable("monthly");

        return true;
      }

      function renderAmortizationTable(mode) {
        const tbody = document.getElementById("amortization-body");
        tbody.innerHTML = "";
        const data = window._biweeklyCalcData || {};
        const schedule = mode === "biweekly" ? data.biweekly : data.monthly;
        if (!schedule || schedule.length === 0) {
          tbody.innerHTML =
            '<tr><td colspan="6" class="px-3 py-4 text-center text-gray-400">Enter your details and click Calculate to see the schedule.</td></tr>';
          return;
        }
        const maxRows = 360; // safety cap
        schedule.slice(0, maxRows).forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-1.5 text-gray-700">${row.period}</td>
        <td class="px-3 py-1.5 text-gray-700">${fmtDate(row.date)}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${fmtCurrency(
          row.payment
        )}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${fmtCurrency(
          row.principal
        )}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${fmtCurrency(
          row.interest
        )}</td>
        <td class="px-3 py-1.5 text-right text-gray-700">${fmtCurrency(
          row.balance
        )}</td>
      `;
          tbody.appendChild(tr);
        });
        if (schedule.length > maxRows) {
          const tr = document.createElement("tr");
          tr.innerHTML = `<td colspan="6" class="px-3 py-2 text-center text-gray-400">Showing first ${maxRows} payments of ${schedule.length} total.</td>`;
          tbody.appendChild(tr);
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Default start date = today
        const startInput = document.getElementById("start-date");
        const today = new Date();
        startInput.valueAsDate = today;

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateBiweekly);

        document
          .getElementById("reset-btn")
          .addEventListener("click", function () {
            document.getElementById("loan-amount").value = 350000;
            document.getElementById("interest-rate").value = 6.5;
            document.getElementById("term-years").value = 30;
            document.getElementById("term-months").value = 0;
            document.getElementById("elapsed-years").value = 0;
            document.getElementById("elapsed-months").value = 0;
            document.getElementById("extra-monthly").value = 0;
            document.getElementById("extra-biweekly").value = 0;
            document.getElementById("start-date").valueAsDate = new Date();

            document.getElementById("monthly-payment").textContent = "$0";
            document.getElementById("monthly-interest").textContent = "$0";
            document.getElementById("monthly-payoff").textContent = "–";
            document.getElementById("biweekly-payment").textContent = "$0";
            document.getElementById("biweekly-interest").textContent = "$0";
            document.getElementById("biweekly-payoff").textContent = "–";
            document.getElementById("interest-saved").textContent = "$0";
            document.getElementById("time-saved").textContent = "–";
            document.getElementById("extra-per-year").textContent = "$0";
            window._biweeklyCalcData = { monthly: [], biweekly: [] };
            renderAmortizationTable("monthly");
          });

        document
          .getElementById("view-monthly")
          .addEventListener("click", function () {
            this.classList.add("toggle-btn-active");
            this.classList.remove("toggle-btn-inactive");
            document
              .getElementById("view-biweekly")
              .classList.remove("toggle-btn-active");
            document
              .getElementById("view-biweekly")
              .classList.add("toggle-btn-inactive");
            renderAmortizationTable("monthly");
          });

        document
          .getElementById("view-biweekly")
          .addEventListener("click", function () {
            this.classList.add("toggle-btn-active");
            this.classList.remove("toggle-btn-inactive");
            document
              .getElementById("view-monthly")
              .classList.remove("toggle-btn-active");
            document
              .getElementById("view-monthly")
              .classList.add("toggle-btn-inactive");
            renderAmortizationTable("biweekly");
          });

        // Initialize storage
        window._biweeklyCalcData = { monthly: [], biweekly: [] };
      });

      window.MathJax = {
        tex: {
