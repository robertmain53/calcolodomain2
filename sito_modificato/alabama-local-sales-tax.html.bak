    <script>
      function toNumber(value) {
        const n = parseFloat(value);
        return isNaN(n) ? 0 : n;
      }

      function formatMoney(value) {
        return "$" + value.toFixed(2);
      }

      function formatPercent(value) {
        return value.toFixed(2) + "%";
      }

      function updateRateDisplays() {
        const stateRate = toNumber(document.getElementById("state-rate").value);
        const countyRate = toNumber(
          document.getElementById("county-rate").value
        );
        const cityRate = toNumber(document.getElementById("city-rate").value);

        const localRate = countyRate + cityRate;
        const combinedRate = stateRate + localRate;

        document.getElementById("local-rate-display").textContent =
          formatPercent(localRate);
        document.getElementById("combined-rate-display").innerHTML =
          combinedRate.toFixed(2) +
          '<span class="text-base align-top">%</span>';
      }

      function calculateTax() {
        const direction = document.getElementById("calc-direction").value;
        const amountInput = toNumber(document.getElementById("amount").value);

        const stateRate = toNumber(document.getElementById("state-rate").value);
        const countyRate = toNumber(
          document.getElementById("county-rate").value
        );
        const cityRate = toNumber(document.getElementById("city-rate").value);

        const totalRatePercent = stateRate + countyRate + cityRate;
        const totalRate = totalRatePercent / 100;
        const stateRateDec = stateRate / 100;
        const countyRateDec = countyRate / 100;
        const cityRateDec = cityRate / 100;

        if (totalRate <= 0 || amountInput <= 0) {
          document.getElementById("results-container").classList.add("hidden");
          return;
        }

        let netAmount, grossAmount, totalTax;

        if (direction === "from-net") {
          netAmount = amountInput;
          totalTax = netAmount * totalRate;
          grossAmount = netAmount + totalTax;
        } else {
          grossAmount = amountInput;
          netAmount = grossAmount / (1 + totalRate);
          totalTax = grossAmount - netAmount;
        }

        const stateTax = netAmount * stateRateDec;
        const countyTax = netAmount * countyRateDec;
        const cityTax = netAmount * cityRateDec;

        document.getElementById("net-amount-display").textContent =
          formatMoney(netAmount);
        document.getElementById("state-tax-display").textContent =
          formatMoney(stateTax);
        document.getElementById("county-tax-display").textContent =
          formatMoney(countyTax);
        document.getElementById("city-tax-display").textContent =
          formatMoney(cityTax);
        document.getElementById("total-tax-display").textContent =
          formatMoney(totalTax);
        document.getElementById("gross-amount-display").textContent =
          formatMoney(grossAmount);

        document.getElementById("state-rate-display").textContent =
          formatPercent(stateRate);
        document.getElementById("county-rate-display").textContent =
          formatPercent(countyRate);
        document.getElementById("city-rate-display").textContent =
          formatPercent(cityRate);
        document.getElementById("combined-rate-display-2").textContent =
          formatPercent(totalRatePercent);

        document.getElementById("results-container").classList.remove("hidden");

        // Update comparison A
        document.getElementById("compare-rate-a").textContent =
          formatPercent(totalRatePercent);
        document.getElementById("compare-tax-a").textContent =
          formatMoney(totalTax);
      }

      function resetCalculator() {
        document.getElementById("calc-direction").value = "from-net";
        document.getElementById("amount").value = "100.00";
        document.getElementById("state-rate").value = "4.00";
        document.getElementById("county-rate").value = "2.00";
        document.getElementById("city-rate").value = "3.00";
        document.getElementById("amount-label-mode").textContent = "before tax";
        document.getElementById("results-container").classList.add("hidden");
        updateRateDisplays();
      }

      function updateAmountLabel() {
        const direction = document.getElementById("calc-direction").value;
        const label = direction === "from-net" ? "before tax" : "including tax";
        document.getElementById("amount-label-mode").textContent = label;
      }

      function compareLocations() {
        const amountDirection = document.getElementById("calc-direction").value;
        const amountInput = toNumber(document.getElementById("amount").value);

        const stateRateA = toNumber(
          document.getElementById("state-rate").value
        );
        const countyRateA = toNumber(
          document.getElementById("county-rate").value
        );
        const cityRateA = toNumber(document.getElementById("city-rate").value);
        const totalRateA = (stateRateA + countyRateA + cityRateA) / 100;

        const stateRateB = toNumber(
          document.getElementById("alt-state-rate").value
        );
        const countyRateB = toNumber(
          document.getElementById("alt-county-rate").value
        );
        const cityRateB = toNumber(
          document.getElementById("alt-city-rate").value
        );
        const totalRateBPercent = stateRateB + countyRateB + cityRateB;
        const totalRateB = totalRateBPercent / 100;

        if (amountInput <= 0 || totalRateA <= 0 || totalRateB <= 0) {
          return;
        }

        let netAmount;
        if (amountDirection === "from-net") {
          netAmount = amountInput;
        } else {
          netAmount = amountInput / (1 + totalRateA);
        }

        const taxA = netAmount * totalRateA;
        const taxB = netAmount * totalRateB;

        document.getElementById("compare-rate-a").textContent = formatPercent(
          stateRateA + countyRateA + cityRateA
        );
        document.getElementById("compare-tax-a").textContent =
          formatMoney(taxA);

        document.getElementById("compare-rate-b").textContent =
          formatPercent(totalRateBPercent);
        document.getElementById("compare-tax-b").textContent =
          formatMoney(taxB);

        const diff = taxB - taxA;
        const diffEl = document.getElementById("compare-diff");
        diffEl.textContent =
          (diff >= 0 ? "+" : "−") +
          formatMoney(Math.abs(diff)).replace("$", "$");
        diffEl.className =
          "font-semibold " +
          (diff > 0
            ? "text-red-600"
            : diff < 0
            ? "text-green-600"
            : "text-gray-800");
      }

      document.addEventListener("DOMContentLoaded", function () {
        updateRateDisplays();
        calculateTax();

        document
          .getElementById("state-rate")
          .addEventListener("input", function () {
            updateRateDisplays();
            calculateTax();
          });
        document
          .getElementById("county-rate")
          .addEventListener("input", function () {
            updateRateDisplays();
            calculateTax();
          });
        document
          .getElementById("city-rate")
          .addEventListener("input", function () {
            updateRateDisplays();
            calculateTax();
          });

        document
          .getElementById("calc-direction")
          .addEventListener("change", function () {
            updateAmountLabel();
            calculateTax();
          });

        document
          .getElementById("amount")
          .addEventListener("input", function () {
            calculateTax();
          });

        document
          .getElementById("calc-btn")
          .addEventListener("click", function () {
            calculateTax();
          });

        document
          .getElementById("reset-btn")
          .addEventListener("click", function () {
            resetCalculator();
            calculateTax();
          });

        document
          .getElementById("compare-btn")
          .addEventListener("click", function () {
            calculateTax();
            compareLocations();
          });
      });

