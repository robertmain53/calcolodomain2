    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = document.querySelectorAll(".tab-panel");
      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => {
            b.classList.remove("border-blue-600", "text-blue-600");
            b.classList.add("border-transparent", "text-gray-600");
          });
          btn.classList.add("border-blue-600", "text-blue-600");
          btn.classList.remove("border-transparent", "text-gray-600");
          tabPanels.forEach((p) => {
            p.classList.toggle("hidden", p.id !== target);
          });
        });
      });

      // Overview slider mapping
      const overviewSlider = document.getElementById("overview-db");
      const overviewValue = document.getElementById("overview-db-value");
      const overviewLabel = document.getElementById("overview-db-label");
      const overviewRisk = document.getElementById("overview-db-risk");

      function updateOverview() {
        const v = parseFloat(overviewSlider.value);
        overviewValue.textContent = v.toFixed(0);
        let label = "";
        let risk = "";
        if (v < 20) {
          label = "Very quiet – rustling leaves, studio";
          risk = "No known risk to hearing.";
        } else if (v < 40) {
          label = "Quiet room, soft whisper";
          risk = "Comfortable and safe for continuous exposure.";
        } else if (v < 60) {
          label = "Quiet office, normal conversation at distance";
          risk = "Generally safe for long-term exposure.";
        } else if (v < 75) {
          label = "Normal conversation at 1 m, busy office";
          risk = "Long-term exposure is usually safe.";
        } else if (v < 85) {
          label = "Busy traffic, loud TV";
          risk = "Prolonged daily exposure may contribute to hearing fatigue.";
        } else if (v < 95) {
          label = "Lawn mower, loud traffic, workshop tools";
          risk = "Hearing protection recommended for extended periods.";
        } else if (v < 110) {
          label = "Nightclub, rock concert, motorcycle";
          risk = "Risk of damage in less than an hour without protection.";
        } else if (v < 130) {
          label = "Sirens, very loud concert, jackhammer";
          risk = "High risk; even short exposure can be harmful.";
        } else {
          label = "Jet engine at close range, fireworks nearby";
          risk = "Extreme risk; immediate danger to hearing.";
        }
        overviewLabel.textContent = label;
        overviewRisk.textContent = risk;
      }
      if (overviewSlider) {
        overviewSlider.addEventListener("input", updateOverview);
        updateOverview();
      }

      // Utility
      function showMessage(el, text) {
        el.textContent = text;
        el.classList.remove("hidden");
      }

      // Pressure <-> dB
      const P0 = 20e-6; // 20 µPa

      document
        .getElementById("btn-pressure-to-db")
        .addEventListener("click", () => {
          const val = parseFloat(
            document.getElementById("pressure-value").value
          );
          const unit = document.getElementById("pressure-unit").value;
          const out = document.getElementById("pressure-result");
          if (!(val > 0)) {
            showMessage(out, "Enter a positive sound pressure value.");
            out.classList.remove(
              "bg-green-50",
              "border-green-200",
              "text-green-800"
            );
            out.classList.add("bg-red-50", "border-red-200", "text-red-800");
            return;
          }
          let pPa = val;
          if (unit === "kpa") pPa = val * 1e3;
          else if (unit === "mpa") pPa = val * 1e6;
          else if (unit === "micropa") pPa = val * 1e-6;
          const Lp = 20 * Math.log10(pPa / P0);
          out.classList.remove("bg-red-50", "border-red-200", "text-red-800");
          out.classList.add(
            "bg-green-50",
            "border-green-200",
            "text-green-800"
          );
          showMessage(out, `Sound level ≈ ${Lp.toFixed(2)} dB SPL`);
          document.getElementById("pressure-db").value = Lp.toFixed(2);
        });

      document
        .getElementById("btn-db-to-pressure")
        .addEventListener("click", () => {
          const Lp = parseFloat(document.getElementById("pressure-db").value);
          const out = document.getElementById("pressure-result");
          if (!isFinite(Lp)) {
            showMessage(out, "Enter a valid decibel value.");
            out.classList.remove(
              "bg-green-50",
              "border-green-200",
              "text-green-800"
            );
            out.classList.add("bg-red-50", "border-red-200", "text-red-800");
            return;
          }
          const p = P0 * Math.pow(10, Lp / 20);
          out.classList.remove("bg-red-50", "border-red-200", "text-red-800");
          out.classList.add(
            "bg-green-50",
            "border-green-200",
            "text-green-800"
          );
          showMessage(
            out,
            `Sound pressure ≈ ${p.toExponential(3)} Pa (≈ ${(p * 1e6).toFixed(
              2
            )} µPa)`
          );
          document.getElementById("pressure-value").value = p.toExponential(3);
          document.getElementById("pressure-unit").value = "pa";
        });

      // Power / intensity <-> dB
      document
        .getElementById("btn-power-to-db")
        .addEventListener("click", () => {
          const ratio = parseFloat(
            document.getElementById("power-ratio").value
          );
          const out = document.getElementById("power-result");
          if (!(ratio > 0)) {
            showMessage(
              out,
              "Enter a positive power or intensity ratio (P / P₀)."
            );
            out.classList.remove(
              "bg-green-50",
              "border-green-200",
              "text-green-800"
            );
            out.classList.add("bg-red-50", "border-red-200", "text-red-800");
            return;
          }
          const L = 10 * Math.log10(ratio);
          out.classList.remove("bg-red-50", "border-red-200", "text-red-800");
          out.classList.add(
            "bg-green-50",
            "border-green-200",
            "text-green-800"
          );
          showMessage(out, `Level ≈ ${L.toFixed(2)} dB`);
          document.getElementById("power-db").value = L.toFixed(2);
        });

      document
        .getElementById("btn-db-to-power")
        .addEventListener("click", () => {
          const L = parseFloat(document.getElementById("power-db").value);
          const out = document.getElementById("power-result");
          if (!isFinite(L)) {
            showMessage(out, "Enter a valid decibel value.");
            out.classList.remove(
              "bg-green-50",
              "border-green-200",
              "text-green-800"
            );
            out.classList.add("bg-red-50", "border-red-200", "text-red-800");
            return;
          }
          const ratio = Math.pow(10, L / 10);
          out.classList.remove("bg-red-50", "border-red-200", "text-red-800");
          out.classList.add(
            "bg-green-50",
            "border-green-200",
            "text-green-800"
          );
          showMessage(
            out,
            `Power/intensity ratio P / P₀ ≈ ${ratio.toExponential(3)}`
          );
          document.getElementById("power-ratio").value = ratio.toExponential(3);
        });

      // Add levels
      document
        .getElementById("btn-add-level-row")
        .addEventListener("click", () => {
          const container = document.getElementById("levels-container");
          const index = container.querySelectorAll(".level-input").length + 1;
          const row = document.createElement("div");
          row.className = "flex gap-2 items-center";
          row.innerHTML = `
      <label class="text-xs text-gray-500 w-16">Level ${index}</label>
      <input type="number" step="any" class="level-input flex-1 border border-gray-300 rounded-md px-3 py-1.5 focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="e.g. 70">
      <span class="text-xs text-gray-500">dB</span>
    `;
          container.appendChild(row);
        });

      document
        .getElementById("btn-calc-sum-db")
        .addEventListener("click", () => {
          const inputs = document.querySelectorAll(".level-input");
          const out = document.getElementById("sum-result");
          let intensities = [];
          inputs.forEach((inp) => {
            const v = parseFloat(inp.value);
            if (isFinite(v)) {
              intensities.push(Math.pow(10, v / 10));
            }
          });
          if (intensities.length === 0) {
            out.classList.remove(
              "bg-green-50",
              "border-green-200",
              "text-green-800"
            );
            out.classList.add("bg-red-50", "border-red-200", "text-red-800");
            showMessage(out, "Enter at least one valid dB level.");
            return;
          }
          const sumI = intensities.reduce((a, b) => a + b, 0);
          const Ltot = 10 * Math.log10(sumI);
          out.classList.remove("bg-red-50", "border-red-200", "text-red-800");
          out.classList.add(
            "bg-green-50",
            "border-green-200",
            "text-green-800"
          );
          showMessage(out, `Total combined level ≈ ${Ltot.toFixed(2)} dB`);
        });

      // Distance
      document
        .getElementById("btn-calc-distance")
        .addEventListener("click", () => {
          const L1 = parseFloat(document.getElementById("dist-l1").value);
          const r1 = parseFloat(document.getElementById("dist-r1").value);
          const r2 = parseFloat(document.getElementById("dist-r2").value);
          const outSpan = document.getElementById("dist-l2");
          if (!isFinite(L1) || !(r1 > 0) || !(r2 > 0)) {
            outSpan.textContent = "Enter a valid level and positive distances.";
            return;
          }
          const L2 = L1 - 20 * Math.log10(r2 / r1);
          outSpan.textContent = `${L2.toFixed(2)} dB at ${r2} m`;
        });

      // Exposure time
      document.getElementById("btn-exp-time").addEventListener("click", () => {
        const L = parseFloat(document.getElementById("exp-db").value);
        const out = document.getElementById("exp-time");
        const note = document.getElementById("exp-note");
        if (!isFinite(L)) {
          out.textContent = "Enter a valid decibel value.";
          return;
        }
        const Lref = 85;
        const Tref = 8; // hours
        if (L <= Lref) {
          out.textContent =
            "8 hours or more (low risk under typical guidelines).";
          note.textContent =
            "Below or at 85 dB, many standards allow a full 8‑hour workday, but lower is always better for long-term hearing health.";
          return;
        }
        const delta = L - Lref;
        const factor = Math.pow(2, delta / 3); // 3 dB exchange rate
        const Thours = Tref / factor;
        let text;
        if (Thours >= 1) {
          text = `${Thours.toFixed(2)} hours`;
        } else {
          const minutes = Thours * 60;
          if (minutes >= 1) text = `${minutes.toFixed(0)} minutes`;
          else text = `${(minutes * 60).toFixed(0)} seconds`;
        }
        out.textContent = text;
        note.textContent =
          "Approximate limit based on 85 dB for 8 h with a 3 dB exchange rate. Individual susceptibility varies; this is not medical advice.";
      });

      // MathJax
      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
