      function classifyBP(sys, dia) {
        if (sys == null || dia == null) return null;
        if (sys >= 180 || dia >= 120) {
          return {
            level: 4,
            key: "crisis",
            label: "Hypertensive crisis",
            badgeClass: "bp-crisis",
          };
        }
        if (sys >= 140 || dia >= 90) {
          return {
            level: 3,
            key: "stage2",
            label: "Stage 2 hypertension",
            badgeClass: "bp-stage2",
          };
        }
        if ((sys >= 130 && sys <= 139) || (dia >= 80 && dia <= 89)) {
          return {
            level: 2,
            key: "stage1",
            label: "Stage 1 hypertension",
            badgeClass: "bp-stage1",
          };
        }
        if (sys >= 120 && sys <= 129 && dia < 80) {
          return {
            level: 1,
            key: "elevated",
            label: "Elevated blood pressure",
            badgeClass: "bp-elevated",
          };
        }
        if (sys < 120 && dia < 80) {
          return {
            level: 0,
            key: "normal",
            label: "Normal blood pressure",
            badgeClass: "bp-normal",
          };
        }
        return {
          level: 1,
          key: "elevated",
          label: "Borderline / elevated",
          badgeClass: "bp-elevated",
        };
      }

      function getRiskText(categoryKey) {
        const risk = {
          normal: {
            text: "Your blood pressure is in the normal range. This is associated with the lowest risk of heart attack, stroke, and kidney disease.",
            bullets: [
              "Keep up healthy habits: balanced diet, regular activity, and not smoking.",
              "Have your blood pressure checked at intervals recommended by your clinician.",
              "If you have other conditions (e.g. diabetes, kidney disease), follow your specialist’s advice.",
            ],
          },
          elevated: {
            text: "Your blood pressure is slightly above the ideal range. Over time, this can increase your risk of cardiovascular disease.",
            bullets: [
              "Discuss lifestyle changes with your clinician (diet, exercise, weight, alcohol, salt).",
              "Regular home monitoring can help track trends over time.",
              "Medication is not always needed at this stage, but follow your clinician’s advice.",
            ],
          },
          stage1: {
            text: "Your readings fall in the range often called stage 1 hypertension. This increases long‑term risk of heart and blood vessel disease.",
            bullets: [
              "Arrange a review with your doctor or nurse to confirm the diagnosis.",
              "Bring a log of home readings taken on different days.",
              "Lifestyle changes are strongly recommended; medication may also be advised depending on your overall risk.",
            ],
          },
          stage2: {
            text: "Your readings are in the stage 2 hypertension range. This is associated with a higher risk of complications if not treated.",
            bullets: [
              "Seek medical review as soon as reasonably possible (days, not months).",
              "Do not stop or change any prescribed medicines without medical advice.",
              "Your clinician may recommend medication changes and closer follow‑up.",
            ],
          },
          crisis: {
            text: "Your readings are in a range that can indicate a hypertensive crisis, especially if you have any concerning symptoms.",
            bullets: [
              "If you have chest pain, shortness of breath, severe headache, confusion, weakness, or vision changes, seek emergency care immediately.",
              "Do not rely on this calculator in an emergency.",
              "If you feel well but readings remain this high, contact urgent or same‑day medical services for advice.",
            ],
          },
        };
        return risk[categoryKey] || risk.normal;
      }

      function getLifestyleTips(categoryKey) {
        const base = [
          "Aim for at least 150 minutes of moderate‑intensity aerobic activity per week, if safe for you.",
          "Limit salt by reducing processed foods, takeaways, and salty snacks.",
          "Eat more vegetables, fruits, whole grains, and unsalted nuts.",
          "Maintain a healthy body weight or work towards gradual, sustainable weight loss.",
          "Limit alcohol and avoid smoking or vaping.",
          "Prioritize good sleep and stress‑management techniques.",
        ];
        if (categoryKey === "normal") {
          return [
            "Continue your current healthy habits to keep blood pressure in the normal range.",
            "Have your blood pressure checked at intervals recommended by your clinician.",
            "Stay active and maintain a balanced diet rich in plants and low in excess salt.",
          ];
        }
        if (categoryKey === "elevated") {
          return base;
        }
        if (categoryKey === "stage1" || categoryKey === "stage2") {
          return [
            "Combine lifestyle changes with any medication plan recommended by your clinician.",
            "Monitor your blood pressure at home if advised, and keep a log of readings.",
            ...base,
          ];
        }
        if (categoryKey === "crisis") {
          return [
            "Follow the emergency and follow‑up advice given by your treating team.",
            "Once safe, work with your clinician on long‑term lifestyle and medication strategies.",
            ...base,
          ];
        }
        return base;
