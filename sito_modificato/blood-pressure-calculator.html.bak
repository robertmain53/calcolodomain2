            `[data-reading-category="${idx + 1}"]`
          );

          const sys = sysInput.value ? parseInt(sysInput.value, 10) : null;
          const dia = diaInput.value ? parseInt(diaInput.value, 10) : null;
          const hr = hrInput.value ? parseInt(hrInput.value, 10) : null;

          if (sys !== null && dia !== null) {
            // basic range validation
            if (sys < 60 || sys > 260 || dia < 40 || dia > 160) {
              sysInput.classList.add("input-error");
              diaInput.classList.add("input-error");
              catEl.textContent = "Out of expected range – check values";
              return;
            }
            sysValues.push(sys);
            diaValues.push(dia);
            if (hr !== null && hr >= 30 && hr <= 220) {
              hrValues.push(hr);
            }

            const cat = classifyBP(sys, dia);
            if (cat && cat.level > highestCategory.level) {
              highestCategory = cat;
            }
            if (cat) {
              catEl.textContent = cat.label;
            } else {
              catEl.textContent = "–";
            }
          } else if (sys === null && dia === null && hr === null) {
            catEl.textContent = "–";
          } else if (sys === null || dia === null) {
            if (sys === null) sysInput.classList.add("input-error");
            if (dia === null) diaInput.classList.add("input-error");
            catEl.textContent = "Enter both systolic and diastolic";
          }
        });

        if (sysValues.length === 0 || diaValues.length === 0) {
          document.getElementById("bp-error").classList.remove("hidden");
          document.getElementById("bp-summary-card").classList.add("hidden");
          document.getElementById("bp-risk-card").classList.add("hidden");
          document.getElementById("bp-lifestyle-card").classList.add("hidden");
          return;
        }

        const avgSys = Math.round(
          sysValues.reduce((a, b) => a + b, 0) / sysValues.length
        );
        const avgDia = Math.round(
          diaValues.reduce((a, b) => a + b, 0) / diaValues.length
        );
        const avgHr = hrValues.length
          ? Math.round(hrValues.reduce((a, b) => a + b, 0) / hrValues.length)
          : null;

        const avgCat = classifyBP(avgSys, avgDia);
        if (avgCat && avgCat.level > highestCategory.level) {
          highestCategory = avgCat;
        }

        // Update summary card
        const summaryCard = document.getElementById("bp-summary-card");
        summaryCard.classList.remove("hidden");
        document.getElementById(
          "bp-avg-display"
        ).textContent = `${avgSys}/${avgDia} mmHg`;
        document.getElementById("bp-avg-hr-display").textContent = avgHr
          ? `Average heart rate: ${avgHr} bpm`
          : "";

        const badge = document.getElementById("bp-category-badge");
        badge.className = "badge " + highestCategory.badgeClass;
        document.getElementById("bp-category-text").textContent =
          highestCategory.label;

        const interp = document.getElementById("bp-interpretation");
        let interpText = `Based on your ${sysValues.length} reading${
          sysValues.length > 1 ? "s" : ""
        }, your average blood pressure is ${avgSys}/${avgDia} mmHg, which falls into the category: ${
          highestCategory.label
        }.`;
        if (age && age < 18) {
          interpText +=
            " This tool is designed for adults; children and teenagers use different charts.";
        }
        interp.textContent = interpText;

        // Risk card
        const riskInfo = getRiskText(highestCategory.key);
        const riskCard = document.getElementById("bp-risk-card");
        riskCard.classList.remove("hidden");
        document.getElementById("bp-risk-text").textContent = riskInfo.text;
        const riskList = document.getElementById("bp-risk-list");
        riskList.innerHTML = "";
        riskInfo.bullets.forEach((item) => {
          const li = document.createElement("li");
          li.textContent = item;
          riskList.appendChild(li);
        });

        // Lifestyle card
        const lifestyleTips = getLifestyleTips(highestCategory.key);
        const lifestyleCard = document.getElementById("bp-lifestyle-card");
        lifestyleCard.classList.remove("hidden");
        const lifestyleList = document.getElementById("bp-lifestyle-list");
        lifestyleList.innerHTML = "";
        lifestyleTips.forEach((item) => {
          const li = document.createElement("li");
          li.textContent = item;
          lifestyleList.appendChild(li);
        });
      });

      document.getElementById("bp-reset-btn").addEventListener("click", () => {
        document.getElementById("age").value = "";
        selectedSex = null;
        sexButtons.forEach((b) =>
          b.classList.remove("border-blue-500", "bg-blue-50")
        );
        document.getElementById("bp-error").classList.add("hidden");

        const rows = document.querySelectorAll("[data-reading-row]");
        rows.forEach((row, idx) => {
          row.querySelectorAll("input").forEach((inp) => {
            inp.value = "";
            inp.classList.remove("input-error");
          });
          const catEl = document.querySelector(
            `[data-reading-category="${idx + 1}"]`
          );
          if (catEl) catEl.textContent = "–";
        });

        document.getElementById("bp-summary-card").classList.add("hidden");
        document.getElementById("bp-risk-card").classList.add("hidden");
        document.getElementById("bp-lifestyle-card").classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
