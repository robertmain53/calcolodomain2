    <script>
      // Heat index calculation based on NOAA formula
      function computeHeatIndexF(T, RH) {
        // If out of main range, return T (will be blended in UI)
        if (T < 80 || RH < 40) {
          return T;
        }

        var HI =
          -42.379 +
          2.04901523 * T +
          10.14333127 * RH -
          0.22475541 * T * RH -
          0.00683783 * T * T -
          0.05481717 * RH * RH +
          0.00122874 * T * T * RH +
          0.00085282 * T * RH * RH -
          0.00000199 * T * T * RH * RH;

        // Adjustment for very low humidity
        if (RH < 13 && T >= 80 && T <= 112) {
          var adj = ((13 - RH) / 4) * Math.sqrt((17 - Math.abs(T - 95)) / 17);
          HI -= adj;
        }

        // Adjustment for very high humidity
        if (RH > 85 && T >= 80 && T <= 87) {
          var adj2 = ((RH - 85) / 10) * ((87 - T) / 5);
          HI += adj2;
        }

        return HI;
      }

      function classifyHeatIndex(hiF) {
        if (hiF < 80) {
          return {
            label: "Caution (low)",
            colorClass: "bg-green-50 border-green-200",
            badgeClass: "bg-green-100 text-green-800",
            description:
              "Generally safe for healthy people, but some may feel discomfort in direct sun or during strenuous work.",
          };
        } else if (hiF < 90) {
          return {
            label: "Caution",
            colorClass: "bg-yellow-50 border-yellow-200",
            badgeClass: "bg-yellow-100 text-yellow-800",
            description:
              "Fatigue is possible with prolonged exposure and physical activity. Take breaks and drink water.",
          };
        } else if (hiF < 103) {
          return {
            label: "Extreme caution",
            colorClass: "bg-orange-50 border-orange-200",
            badgeClass: "bg-orange-100 text-orange-800",
            description:
              "Heat cramps and heat exhaustion are possible. Limit strenuous activity and stay hydrated.",
          };
        } else if (hiF < 125) {
          return {
            label: "Danger",
            colorClass: "bg-red-50 border-red-200",
            badgeClass: "bg-red-100 text-red-800",
            description:
              "Heat cramps and heat exhaustion are likely; heat stroke is possible. Avoid outdoor exertion if possible.",
          };
        } else {
          return {
            label: "Extreme danger",
            colorClass: "bg-rose-50 border-rose-200",
            badgeClass: "bg-rose-100 text-rose-800",
            description:
              "Heat stroke is highly likely with any prolonged exposure or physical activity. Seek cooler environments immediately.",
          };
        }
      }

      function round1(x) {
        return Math.round(x * 10) / 10;
      }

      function updateGuidance(hiF) {
        var list = document.getElementById("guidance-list");
        list.innerHTML = "";

        function addItem(text) {
          var li = document.createElement("li");
          li.textContent = text;
          list.appendChild(li);
        }

        if (hiF < 80) {
          addItem(
            "Conditions are generally safe for healthy individuals, but stay hydrated and take breaks in shade."
          );
          addItem(
            "Sensitive groups (older adults, young children, people with chronic illness) should still avoid overexertion."
          );
        } else if (hiF < 90) {
          addItem("Drink water regularly, even if you are not thirsty.");
          addItem(
            "Plan strenuous outdoor activities for early morning or evening."
          );
          addItem("Wear lightweight, light-colored, loose-fitting clothing.");
        } else if (hiF < 103) {
          addItem(
            "Limit strenuous outdoor activity and take frequent breaks in shade or air conditioning."
          );
          addItem(
            "Watch for signs of heat cramps, heavy sweating, dizziness, or nausea."
          );
          addItem(
            "Never leave children, pets, or vulnerable adults in parked vehicles."
          );
        } else if (hiF < 125) {
          addItem(
            "Avoid outdoor exertion if possible; move activities indoors or reschedule."
          );
          addItem(
            "Use air conditioning or visit cooling centers; fans alone may not be enough."
          );
          addItem(
            "Check on older adults, people with chronic illness, and those without AC."
          );
        } else {
          addItem(
            "This level of heat is extremely dangerous. Stay indoors in air conditioning if at all possible."
          );
          addItem(
            "If you must be outside, keep activity to an absolute minimum and take frequent cooling breaks."
          );
          addItem(
            "Seek emergency care immediately if anyone shows confusion, loss of consciousness, or hot, dry skin."
          );
        }
      }

      function calculateHeatIndex() {
        var tempInput = document.getElementById("temp-value");
        var tempUnit = document.getElementById("temp-unit").value;
        var rhInput = document.getElementById("rh-value");

        var T = parseFloat(tempInput.value);
        var RH = parseFloat(rhInput.value);

        if (isNaN(T) || isNaN(RH)) {
          alert("Please enter both temperature and relative humidity.");
          return;
        }
        if (RH < 0 || RH > 100) {
          alert("Relative humidity must be between 0% and 100%.");
          return;
        }

        // Convert to Fahrenheit for formula
        var T_F = tempUnit === "C" ? (T * 9) / 5 + 32 : T;

        var hiF = computeHeatIndexF(T_F, RH);

        // For cooler/drier conditions, blend toward actual temperature
        if (T_F < 80 || RH < 40) {
          var weight = Math.min(1, Math.max(0, (T_F - 60) / 20)); // 60F->0, 80F->1
          hiF = T_F * (1 - weight) + hiF * weight;
        }

        var hiC = ((hiF - 32) * 5) / 9;

        // Update main result in user's unit
        var hiMainEl = document.getElementById("hi-main");
        var hiMainUnitEl = document.getElementById("hi-main-unit");
        var hiAltEl = document.getElementById("hi-alt");
        var hiAltUnitEl = document.getElementById("hi-alt-unit");

        if (tempUnit === "F") {
          hiMainEl.textContent = round1(hiF);
          hiMainUnitEl.textContent = "°F";
          hiAltEl.textContent = round1(hiC);
          hiAltUnitEl.textContent = "°C";
        } else {
          hiMainEl.textContent = round1(hiC);
          hiMainUnitEl.textContent = "°C";
          hiAltEl.textContent = round1(hiF);
          hiAltUnitEl.textContent = "°F";
        }

        // Risk classification
        var risk = classifyHeatIndex(hiF);
        var riskCard = document.getElementById("risk-card");
        var riskBadge = document.getElementById("risk-badge");
        var riskDesc = document.getElementById("risk-description");

        riskCard.className = "border rounded-lg p-4 mb-3 " + risk.colorClass;
        riskBadge.className = "badge " + risk.badgeClass;
        riskBadge.textContent = risk.label;
        riskDesc.textContent = risk.description;

        updateGuidance(hiF);
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("calc-btn")
          .addEventListener("click", calculateHeatIndex);

        document
          .getElementById("reset-btn")
          .addEventListener("click", function () {
            document.getElementById("temp-value").value = 90;
            document.getElementById("temp-unit").value = "F";
            document.getElementById("rh-value").value = 70;
            document.getElementById("hi-main").textContent = "–";
            document.getElementById("hi-main-unit").textContent = "°F";
            document.getElementById("hi-alt").textContent = "–";
            document.getElementById("hi-alt-unit").textContent = "°C";
            var riskCard = document.getElementById("risk-card");
            riskCard.className = "border rounded-lg p-4 mb-3";
            document.getElementById("risk-badge").className =
              "badge bg-gray-200 text-gray-800";
            document.getElementById("risk-badge").textContent = "–";
            document.getElementById("risk-description").textContent =
              "Enter temperature and humidity to see your risk level.";
            var list = document.getElementById("guidance-list");
            list.innerHTML = "";
            [
              "Stay hydrated and take breaks in the shade or indoors.",
              "Never leave children, pets, or vulnerable people in parked cars.",
              "Check on older adults and people with chronic illnesses during heat waves.",
            ].forEach(function (t) {
              var li = document.createElement("li");
              li.textContent = t;
              list.appendChild(li);
            });
          });

        document
          .getElementById("btn-example-moderate")
          .addEventListener("click", function () {
            document.getElementById("temp-value").value = 88;
            document.getElementById("temp-unit").value = "F";
            document.getElementById("rh-value").value = 55;
            calculateHeatIndex();
          });

        document
          .getElementById("btn-example-extreme")
          .addEventListener("click", function () {
            document.getElementById("temp-value").value = 102;
            document.getElementById("temp-unit").value = "F";
            document.getElementById("rh-value").value = 70;
            calculateHeatIndex();
          });

        // Auto-calc on load with defaults
        calculateHeatIndex();
      });
    </script>

