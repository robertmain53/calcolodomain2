    <script>
      // --- Utility data ---
      const disposableDomains = new Set([
        "mailinator.com",
        "10minutemail.com",
        "10minutemail.net",
        "guerrillamail.com",
        "guerrillamail.net",
        "yopmail.com",
        "yopmail.net",
        "temp-mail.org",
        "tempmail.com",
        "trashmail.com",
        "getnada.com",
        "sharklasers.com",
        "maildrop.cc",
        "dispostable.com",
        "fakeinbox.com",
        "mailnesia.com",
      ]);

      const rolePrefixes = new Set([
        "admin",
        "administrator",
        "support",
        "info",
        "contact",
        "sales",
        "billing",
        "accounts",
        "noreply",
        "no-reply",
        "help",
        "office",
        "hr",
        "jobs",
        "career",
        "careers",
        "postmaster",
        "webmaster",
        "abuse",
      ]);

      const commonTlds = new Set([
        "com",
        "net",
        "org",
        "io",
        "co",
        "edu",
        "gov",
        "us",
        "uk",
        "de",
        "fr",
        "es",
        "it",
        "ca",
        "au",
        "nl",
        "se",
        "no",
        "ch",
        "jp",
        "br",
        "in",
        "ru",
        "pl",
        "biz",
        "info",
        "online",
        "app",
        "dev",
        "ai",
      ]);

      // --- Core validation ---
      function validateEmailDetailed(emailRaw) {
        const email = emailRaw.trim();
        const result = {
          email,
          isValid: false,
          status: "invalid",
          syntaxMessage: "",
          domainMessage: "",
          tldMessage: "",
          typeMessage: "",
          flags: {
            disposable: false,
            roleBased: false,
          },
        };

        if (!email) {
          result.syntaxMessage = "Empty string.";
          return result;
        }

        if (!email.includes("@")) {
          result.syntaxMessage = "Missing @ symbol.";
          return result;
        }

        const parts = email.split("@");
        if (parts.length !== 2) {
          result.syntaxMessage = "Email must contain exactly one @ symbol.";
          return result;
        }

        const [local, domain] = parts;

        // Local-part checks
        if (!local) {
          result.syntaxMessage = "Missing local-part before @.";
          return result;
        }
        if (local.length > 64) {
          result.syntaxMessage = "Local-part is too long (max 64 characters).";
          return result;
        }
        if (local.startsWith(".") || local.endsWith(".")) {
          result.syntaxMessage = "Local-part cannot start or end with a dot.";
          return result;
        }
        if (local.includes("..")) {
          result.syntaxMessage = "Local-part cannot contain consecutive dots.";
          return result;
        }
        const localRegex = /^[A-Za-z0-9.!#$%&'*+/?^_`{|}~-]+$/;
        if (!localRegex.test(local)) {
          result.syntaxMessage = "Local-part contains invalid characters.";
          return result;
        }

        // Domain checks
        if (!domain) {
          result.domainMessage = "Missing domain after @.";
          result.syntaxMessage =
            "Syntax is valid up to @, but domain is missing.";
          return result;
        }
        if (domain.length > 255) {
          result.domainMessage = "Domain is too long (max 255 characters).";
          return result;
        }
        if (!domain.includes(".")) {
          result.domainMessage =
            "Domain should contain at least one dot (e.g. example.com).";
          return result;
        }

        const domainLabels = domain.split(".");
        if (domainLabels.some((l) => l.length === 0)) {
          result.domainMessage =
            "Domain labels cannot be empty (check consecutive or trailing dots).";
          return result;
        }
        for (const label of domainLabels) {
          if (label.length > 63) {
            result.domainMessage =
              "A domain label is too long (max 63 characters).";
            return result;
          }
          if (!/^[A-Za-z0-9-]+$/.test(label)) {
            result.domainMessage =
              "Domain labels may contain only letters, digits, and hyphens.";
            return result;
          }
          if (label.startsWith("-") || label.endsWith("-")) {
            result.domainMessage =
              "Domain labels cannot start or end with a hyphen.";
            return result;
          }
        }

        const tld = domainLabels[domainLabels.length - 1].toLowerCase();
        if (!/^[A-Za-z]{2,24}$/.test(tld)) {
          result.tldMessage = "Top-level domain looks unusual or invalid.";
        } else if (commonTlds.has(tld)) {
          result.tldMessage = `Top-level domain .${tld} is common and valid.`;
        } else {
          result.tldMessage = `Top-level domain .${tld} is not in the most common list but may still be valid.`;
        }

        // Classification
        const domainLower = domain.toLowerCase();
        if (disposableDomains.has(domainLower)) {
          result.flags.disposable = true;
        }

        const localLower = local.toLowerCase();
        const localBase = localLower.split("+")[0];
        if (rolePrefixes.has(localBase)) {
          result.flags.roleBased = true;
        }

        result.isValid = true;
        if (result.flags.disposable) {
          result.status = "warning";
          result.typeMessage =
            "Valid format but from a known disposable email provider.";
        } else if (result.flags.roleBased) {
          result.status = "warning";
          result.typeMessage =
            "Valid format but appears to be a role-based address (e.g. info@, support@).";
        } else {
          result.status = "valid";
          result.typeMessage = "Valid personal or business email format.";
        }

        result.syntaxMessage = "Syntax is valid.";
        if (!result.domainMessage) {
          result.domainMessage = "Domain format looks valid.";
        }

        return result;
      }

      // --- UI helpers ---
      function setBadge(el, status) {
        el.classList.remove(
          "badge-valid",
          "badge-invalid",
          "badge-warning",
          "badge-neutral"
        );
        if (status === "valid") {
          el.classList.add("badge-valid");
          el.textContent = "Valid";
        } else if (status === "invalid") {
          el.classList.add("badge-invalid");
          el.textContent = "Invalid";
        } else if (status === "warning") {
          el.classList.add("badge-warning");
          el.textContent = "Valid with warnings";
        } else {
          el.classList.add("badge-neutral");
          el.textContent = "Not checked";
        }
      }

      // --- Single email UI ---
      const singleInput = document.getElementById("single-email-input");
      const singleBtn = document.getElementById("single-validate-btn");
      const singleCard = document.getElementById("single-result-card");
      const singleBadge = document.getElementById("single-status-badge");
      const singleEmailDisplay = document.getElementById(
        "single-email-display"
      );
      const singleSyntax = document.getElementById("single-syntax");
      const singleDomain = document.getElementById("single-domain");
      const singleTld = document.getElementById("single-tld");
      const singleType = document.getElementById("single-type");

      function runSingleValidation() {
        const value = singleInput.value;
        const res = validateEmailDetailed(value);
        singleCard.classList.remove("hidden");
        singleEmailDisplay.textContent = res.email || "(empty)";
        setBadge(singleBadge, res.status);
        singleSyntax.textContent = res.syntaxMessage;
        singleDomain.textContent = res.domainMessage || "Not available.";
        singleTld.textContent = res.tldMessage || "Not available.";
        singleType.textContent = res.typeMessage || "Not available.";
      }

      singleBtn.addEventListener("click", runSingleValidation);
      singleInput.addEventListener("keydown", (e) => {
        if (e.key === "Enter") {
          e.preventDefault();
          runSingleValidation();
        }
      });

      // --- Bulk UI ---
      const bulkInput = document.getElementById("bulk-input");
      const bulkCount = document.getElementById("bulk-count");
      const bulkBtn = document.getElementById("bulk-validate-btn");
      const bulkClearBtn = document.getElementById("bulk-clear-btn");
      const bulkDownloadBtn = document.getElementById("bulk-download-btn");
      const bulkSummary = document.getElementById("bulk-summary");
      const bulkValidCount = document.getElementById("bulk-valid-count");
      const bulkInvalidCount = document.getElementById("bulk-invalid-count");
      const bulkWarningCount = document.getElementById("bulk-warning-count");
      const bulkTableBody = document.getElementById("bulk-table-body");

      let bulkResults = [];

      function extractEmails(text) {
        const lines = text.split(/\r?\n/);
        const emails = [];
        for (const line of lines) {
          const trimmed = line.trim();
          if (!trimmed) continue;
          // If CSV, take first token that looks like an email-ish string
          const parts = trimmed.split(/[,\t;]/);
          let candidate = parts[0].trim();
          // Remove surrounding quotes
          candidate = candidate.replace(/^"(.*)"$/, "$1");
          if (candidate) emails.push(candidate);
        }
        return emails;
      }

      function updateBulkCount() {
        const emails = extractEmails(bulkInput.value);
        bulkCount.textContent = `${emails.length} email${
          emails.length === 1 ? "" : "s"
        } detected`;
      }

      bulkInput.addEventListener("input", updateBulkCount);

      function runBulkValidation() {
        const emails = extractEmails(bulkInput.value);
        bulkResults = emails.map((email, idx) => {
          const res = validateEmailDetailed(email);
          return { index: idx + 1, email, ...res };
        });

        if (bulkResults.length === 0) {
          bulkTableBody.innerHTML =
            '<tr><td colspan="4" class="px-3 py-3 text-center text-gray-400">No emails detected. Paste one email per line above.</td></tr>';
          bulkSummary.classList.add("hidden");
          bulkDownloadBtn.disabled = true;
          return;
        }

        let valid = 0,
          invalid = 0,
          warning = 0;
        const rows = [];
        for (const r of bulkResults) {
          if (!r.isValid) invalid++;
          else if (r.status === "warning") warning++;
          else valid++;

          let statusLabel = "";
          let statusClass = "";
          if (!r.isValid) {
            statusLabel = "Invalid";
            statusClass = "text-red-700";
          } else if (r.status === "warning") {
            statusLabel = "Valid (warning)";
            statusClass = "text-amber-700";
          } else {
            statusLabel = "Valid";
            statusClass = "text-green-700";
          }

          const reason = !r.isValid
            ? r.syntaxMessage || r.domainMessage || "Invalid format."
            : r.typeMessage || "Valid.";

          rows.push(
            `<tr class="border-t">
          <td class="px-2 py-1 text-gray-500">${r.index}</td>
          <td class="px-2 py-1 font-mono text-gray-800 break-all">${r.email}</td>
          <td class="px-2 py-1 font-semibold ${statusClass}">${statusLabel}</td>
          <td class="px-2 py-1 text-gray-700">${reason}</td>
        </tr>`
          );
        }
        bulkTableBody.innerHTML = rows.join("");

        bulkValidCount.textContent = `Valid: ${valid}`;
        bulkInvalidCount.textContent = `Invalid: ${invalid}`;
        bulkWarningCount.textContent = `Valid with warnings: ${warning}`;
        bulkSummary.classList.remove("hidden");
        bulkDownloadBtn.disabled = false;
      }

      function clearBulk() {
        bulkInput.value = "";
        bulkResults = [];
        bulkCount.textContent = "0 emails detected";
        bulkSummary.classList.add("hidden");
        bulkDownloadBtn.disabled = true;
        bulkTableBody.innerHTML =
          '<tr><td colspan="4" class="px-3 py-3 text-center text-gray-400">No data yet. Paste emails above and click “Validate list”.</td></tr>';
      }

      function downloadBulkCsv() {
        if (!bulkResults.length) return;
        const header = [
          "index",
          "email",
          "status",
          "syntax",
          "domain",
          "tld",
          "type",
          "disposable",
          "role_based",
        ];
        const lines = [header.join(",")];
        for (const r of bulkResults) {
          const status = !r.isValid ? "invalid" : r.status;
          const row = [
            r.index,
            `"${r.email.replace(/"/g, '""')}"`,
            status,
            `"${(r.syntaxMessage || "").replace(/"/g, '""')}"`,
            `"${(r.domainMessage || "").replace(/"/g, '""')}"`,
            `"${(r.tldMessage || "").replace(/"/g, '""')}"`,
            `"${(r.typeMessage || "").replace(/"/g, '""')}"`,
            r.flags.disposable ? "yes" : "no",
            r.flags.roleBased ? "yes" : "no",
          ];
          lines.push(row.join(","));
        }
        const blob = new Blob([lines.join("\n")], {
          type: "text/csv;charset=utf-8;",
        });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "email-validation-results.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      bulkBtn.addEventListener("click", runBulkValidation);
      bulkClearBtn.addEventListener("click", clearBulk);
      bulkDownloadBtn.addEventListener("click", downloadBulkCsv);

      // --- Tabs ---
      const tabSingle = document.getElementById("tab-single");
      const tabBulk = document.getElementById("tab-bulk");
      const panelSingle = document.getElementById("panel-single");
      const panelBulk = document.getElementById("panel-bulk");

      function activateTab(tab) {
        if (tab === "single") {
          tabSingle.classList.add("border-blue-600", "text-blue-600");
          tabSingle.classList.remove("border-transparent", "text-gray-500");
          tabBulk.classList.add("border-transparent", "text-gray-500");
          tabBulk.classList.remove("border-blue-600", "text-blue-600");
          panelSingle.classList.remove("hidden");
          panelBulk.classList.add("hidden");
        } else {
          tabBulk.classList.add("border-blue-600", "text-blue-600");
          tabBulk.classList.remove("border-transparent", "text-gray-500");
          tabSingle.classList.add("border-transparent", "text-gray-500");
          tabSingle.classList.remove("border-blue-600", "text-blue-600");
          panelBulk.classList.remove("hidden");
          panelSingle.classList.add("hidden");
        }
      }

      tabSingle.addEventListener("click", () => activateTab("single"));
      tabBulk.addEventListener("click", () => activateTab("bulk"));

      // Initialize counts
      updateBulkCount();
    </script>

