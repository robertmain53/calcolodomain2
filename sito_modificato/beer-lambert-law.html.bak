    <script>
      (function () {
        const modeEl = document.getElementById("mode");
        const decimalsEl = document.getElementById("decimals");

        const epsEl = document.getElementById("eps");
        const cEl = document.getElementById("c");
        const cUnitEl = document.getElementById("cUnit");
        const lEl = document.getElementById("l");
        const lUnitEl = document.getElementById("lUnit");

        const A_for_c_El = document.getElementById("A_for_c");
        const A_for_eps_El = document.getElementById("A_for_eps");
        const A_for_l_El = document.getElementById("A_for_l");

        const groupA = document.getElementById("group-A");
        const groupC = document.getElementById("group-c");
        const groupEps = document.getElementById("group-eps");
        const groupL = document.getElementById("group-l");

        const calcBtn = document.getElementById("calcBtn");
        const clearBtn = document.getElementById("clearBtn");
        const resultsBox = document.getElementById("results");
        const resultMain = document.getElementById("result-main");
        const resultSecondary = document.getElementById("result-secondary");
        const resultFormula = document.getElementById("result-formula");
        const resultSubstitution = document.getElementById(
          "result-substitution"
        );
        const errorMsg = document.getElementById("error-msg");

        function setModeVisibility() {
          const mode = modeEl.value;
          groupA.classList.add("hidden");
          groupC.classList.add("hidden");
          groupEps.classList.add("hidden");
          groupL.classList.add("hidden");

          if (mode === "A") {
            groupA.classList.remove("hidden");
          } else if (mode === "c") {
            groupA.classList.remove("hidden");
            groupC.classList.remove("hidden");
          } else if (mode === "eps") {
            groupA.classList.remove("hidden");
            groupEps.classList.remove("hidden");
          } else if (mode === "l") {
            groupA.classList.remove("hidden");
            groupL.classList.remove("hidden");
          }
          hideError();
        }

        function showError(msg) {
          errorMsg.textContent = msg;
          errorMsg.classList.remove("hidden");
          resultsBox.classList.add("hidden");
        }

        function hideError() {
          errorMsg.classList.add("hidden");
        }

        function parseNumber(el) {
          const v = el.value.trim();
          if (v === "") return null;
          const n = Number(v);
          return isFinite(n) ? n : NaN;
        }

        function convertConcentrationToMolar(c, unit) {
          if (c == null || isNaN(c)) return NaN;
          if (unit === "M") return c;
          if (unit === "mM") return c * 1e-3;
          if (unit === "uM") return c * 1e-6;
          return c;
        }

        function convertLengthToCm(l, unit) {
          if (l == null || isNaN(l)) return NaN;
          if (unit === "cm") return l;
          if (unit === "mm") return l * 0.1;
          if (unit === "m") return l * 100;
          return l;
        }

        function formatNumber(value, decimals) {
          if (!isFinite(value)) return "NaN";
          const d = Math.max(0, Math.min(10, Number(decimals) || 3));
          return value.toFixed(d);
        }

        function calculate() {
          hideError();
          const mode = modeEl.value;
          const decimals = Number(decimalsEl.value) || 3;

          const eps = parseNumber(epsEl);
          const cRaw = parseNumber(cEl);
          const lRaw = parseNumber(lEl);
          const cM = convertConcentrationToMolar(cRaw, cUnitEl.value);
          const lCm = convertLengthToCm(lRaw, lUnitEl.value);

          let A, c, epsCalc, lCalc;

          try {
            if (mode === "A") {
              if (
                eps == null ||
                isNaN(eps) ||
                cM == null ||
                isNaN(cM) ||
                lCm == null ||
                isNaN(lCm)
              ) {
                showError("Please enter ε, c, and ℓ to calculate absorbance.");
                return;
              }
              if (eps <= 0 || cM < 0 || lCm <= 0) {
                showError("ε and ℓ must be positive; c cannot be negative.");
                return;
              }
              A = eps * lCm * cM;
              resultMain.textContent = `A = ${formatNumber(A, decimals)}`;
              resultSecondary.textContent = "Absorbance (dimensionless)";
              resultFormula.innerHTML = "\\( A = \\varepsilon \\ell c \\)";
              resultSubstitution.innerHTML =
                `\\( A = (${eps}\\,\\text{L·mol}^{-1}\\text{·cm}^{-1}) ` +
                `(${lCm.toPrecision(4)}\\,\\text{cm}) (${cM.toExponential(
                  3
                )}\\,\\text{mol·L}^{-1}) \\)`;
            } else if (mode === "c") {
              const A_in = parseNumber(A_for_c_El);
              if (
                A_in == null ||
                isNaN(A_in) ||
                eps == null ||
                isNaN(eps) ||
                lCm == null ||
                isNaN(lCm)
              ) {
                showError(
                  "Please enter A, ε, and ℓ to calculate concentration."
                );
                return;
              }
              if (eps <= 0 || lCm <= 0) {
                showError("ε and ℓ must be positive.");
                return;
              }
              c = A_in / (eps * lCm);
              const c_mM = c * 1e3;
              const c_uM = c * 1e6;
              resultMain.textContent = `c = ${formatNumber(
                c,
                decimals
              )} mol·L⁻¹`;
              resultSecondary.textContent = `≈ ${formatNumber(
                c_mM,
                decimals
              )} mM  |  ${formatNumber(c_uM, decimals)} µM`;
              resultFormula.innerHTML =
                "\\( c = \\dfrac{A}{\\varepsilon \\ell} \\)";
              resultSubstitution.innerHTML =
                `\\( c = \\dfrac{${A_in}}{(${eps}\\,\\text{L·mol}^{-1}\\text{·cm}^{-1}) ` +
                `(${lCm.toPrecision(4)}\\,\\text{cm})} \\)`;
            } else if (mode === "eps") {
              const A_in = parseNumber(A_for_eps_El);
              if (
                A_in == null ||
                isNaN(A_in) ||
                cM == null ||
                isNaN(cM) ||
                lCm == null ||
                isNaN(lCm)
              ) {
                showError(
                  "Please enter A, c, and ℓ to calculate molar absorptivity."
                );
                return;
              }
              if (cM <= 0 || lCm <= 0) {
                showError("c and ℓ must be positive.");
                return;
              }
              epsCalc = A_in / (lCm * cM);
              resultMain.textContent = `ε = ${formatNumber(
                epsCalc,
                decimals
              )} L·mol⁻¹·cm⁻¹`;
              resultSecondary.textContent =
                "Molar absorptivity at the chosen wavelength";
              resultFormula.innerHTML =
                "\\( \\varepsilon = \\dfrac{A}{\\ell c} \\)";
              resultSubstitution.innerHTML =
                `\\( \\varepsilon = \\dfrac{${A_in}}{(${lCm.toPrecision(
                  4
                )}\\,\\text{cm}) ` +
                `(${cM.toExponential(3)}\\,\\text{mol·L}^{-1})} \\)`;
            } else if (mode === "l") {
              const A_in = parseNumber(A_for_l_El);
              if (
                A_in == null ||
                isNaN(A_in) ||
                eps == null ||
                isNaN(eps) ||
                cM == null ||
                isNaN(cM)
              ) {
                showError("Please enter A, ε, and c to calculate path length.");
                return;
              }
              if (eps <= 0 || cM <= 0) {
                showError("ε and c must be positive.");
                return;
              }
              lCalc = A_in / (eps * cM); // in cm
              const l_mm = lCalc * 10;
              const l_m = lCalc / 100;
              resultMain.textContent = `ℓ = ${formatNumber(
                lCalc,
                decimals
              )} cm`;
              resultSecondary.textContent = `≈ ${formatNumber(
                l_mm,
                decimals
              )} mm  |  ${formatNumber(l_m, decimals)} m`;
              resultFormula.innerHTML =
                "\\( \\ell = \\dfrac{A}{\\varepsilon c} \\)";
              resultSubstitution.innerHTML =
                `\\( \\ell = \\dfrac{${A_in}}{(${eps}\\,\\text{L·mol}^{-1}\\text{·cm}^{-1}) ` +
                `(${cM.toExponential(3)}\\,\\text{mol·L}^{-1})} \\)`;
            }

            resultsBox.classList.remove("hidden");
            if (window.MathJax && window.MathJax.typesetPromise) {
              MathJax.typesetPromise([resultsBox]);
            }
          } catch (e) {
            console.error(e);
            showError(
              "An unexpected error occurred. Please check your inputs."
            );
          }
        }

        function clearAll() {
          epsEl.value = "";
          cEl.value = "";
          lEl.value = "";
          A_for_c_El.value = "";
          A_for_eps_El.value = "";
          A_for_l_El.value = "";
          decimalsEl.value = 3;
          cUnitEl.value = "M";
          lUnitEl.value = "cm";
          resultsBox.classList.add("hidden");
          hideError();
        }

        modeEl.addEventListener("change", setModeVisibility);
        calcBtn.addEventListener("click", calculate);
        clearBtn.addEventListener("click", clearAll);

        setModeVisibility();
      })();
    </script>
  
