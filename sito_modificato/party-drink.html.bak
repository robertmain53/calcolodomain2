    <script>
      // Party Drink Calculator Logic
      (function () {
        const numAdultsEl = document.getElementById("numAdults");
        const numKidsEl = document.getElementById("numKids");
        const durationEl = document.getElementById("duration");
        const drinkingStyleEl = document.getElementById("drinkingStyle");
        const alcoholShareEl = document.getElementById("alcoholShare");
        const alcoholShareLabel = document.getElementById("alcoholShareLabel");

        const wineShareEl = document.getElementById("wineShare");
        const beerShareEl = document.getElementById("beerShare");
        const spiritsShareEl = document.getElementById("spiritsShare");
        const wineShareLabel = document.getElementById("wineShareLabel");
        const beerShareLabel = document.getElementById("beerShareLabel");
        const spiritsShareLabel = document.getElementById("spiritsShareLabel");
        const alcoholBreakdownWarning = document.getElementById(
          "alcoholBreakdownWarning"
        );

        const softShareEl = document.getElementById("softShare");
        const juiceShareEl = document.getElementById("juiceShare");
        const waterShareEl = document.getElementById("waterShare");
        const softShareLabel = document.getElementById("softShareLabel");
        const juiceShareLabel = document.getElementById("juiceShareLabel");
        const waterShareLabel = document.getElementById("waterShareLabel");
        const softBreakdownWarning = document.getElementById(
          "softBreakdownWarning"
        );

        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorMessage = document.getElementById("errorMessage");
        const resultsContainer = document.getElementById("resultsContainer");
        const summaryText = document.getElementById("summaryText");

        function updateLabels() {
          alcoholShareLabel.textContent = alcoholShareEl.value;
          wineShareLabel.textContent = wineShareEl.value;
          beerShareLabel.textContent = beerShareEl.value;
          spiritsShareLabel.textContent = spiritsShareEl.value;
          softShareLabel.textContent = softShareEl.value;
          juiceShareLabel.textContent = juiceShareEl.value;
          waterShareLabel.textContent = waterShareEl.value;

          const alcoholSum =
            Number(wineShareEl.value) +
            Number(beerShareEl.value) +
            Number(spiritsShareEl.value);
          alcoholBreakdownWarning.classList.toggle(
            "hidden",
            alcoholSum === 100
          );

          const softSum =
            Number(softShareEl.value) +
            Number(juiceShareEl.value) +
            Number(waterShareEl.value);
          softBreakdownWarning.classList.toggle("hidden", softSum === 100);
        }

        ["input", "change"].forEach((evt) => {
          alcoholShareEl.addEventListener(evt, updateLabels);
          wineShareEl.addEventListener(evt, updateLabels);
          beerShareEl.addEventListener(evt, updateLabels);
          spiritsShareEl.addEventListener(evt, updateLabels);
          softShareEl.addEventListener(evt, updateLabels);
          juiceShareEl.addEventListener(evt, updateLabels);
          waterShareEl.addEventListener(evt, updateLabels);
        });

        function normalizeShares(values) {
          const sum = values.reduce((a, b) => a + b, 0);
          if (sum <= 0) {
            return values.map(() => 0);
          }
          return values.map((v) => v / sum);
        }

        function formatNumber(n, decimals = 1) {
          return Number(n.toFixed(decimals)).toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          });
        }

        function clearResults() {
          resultsContainer.innerHTML = "";
          summaryText.textContent = "";
        }

        function calculate() {
          clearResults();
          errorMessage.classList.add("hidden");

          const adults = Math.max(0, Number(numAdultsEl.value) || 0);
          const kids = Math.max(0, Number(numKidsEl.value) || 0);
          const duration = Math.max(1, Number(durationEl.value) || 1);
          const style = drinkingStyleEl.value;

          if (adults === 0 && kids === 0) {
            errorMessage.textContent = "Please enter at least one guest.";
            errorMessage.classList.remove("hidden");
            return;
          }

          let styleFactor = 1;
          if (style === "light") styleFactor = 0.7;
          else if (style === "heavy") styleFactor = 1.3;

          const baseDrinksPerAdult = 2 + Math.max(0, duration - 1) * 1;
          const drinksPerAdult = baseDrinksPerAdult * styleFactor;
          const totalDrinksAdults = adults * drinksPerAdult;

          const alcoholShare =
            Math.min(100, Math.max(0, Number(alcoholShareEl.value) || 0)) / 100;
          const nonAlcoholShare = 1 - alcoholShare;

          const alcoholDrinks = totalDrinksAdults * alcoholShare;
          const nonAlcoholDrinks =
            totalDrinksAdults * nonAlcoholShare + kids * Math.max(2, duration);

          const wineShare = Number(wineShareEl.value) || 0;
          const beerShare = Number(beerShareEl.value) || 0;
          const spiritsShare = Number(spiritsShareEl.value) || 0;
          const [wineNorm, beerNorm, spiritsNorm] = normalizeShares([
            wineShare,
            beerShare,
            spiritsShare,
          ]);

          const softShare = Number(softShareEl.value) || 0;
          const juiceShare = Number(juiceShareEl.value) || 0;
          const waterShare = Number(waterShareEl.value) || 0;
          const [softNorm, juiceNorm, waterNorm] = normalizeShares([
            softShare,
            juiceShare,
            waterShare,
          ]);

          const wineDrinks = alcoholDrinks * wineNorm;
          const beerDrinks = alcoholDrinks * beerNorm;
          const spiritsDrinks = alcoholDrinks * spiritsNorm;

          const softDrinks = nonAlcoholDrinks * softNorm;
          const juiceDrinks = nonAlcoholDrinks * juiceNorm;
          const waterDrinks = nonAlcoholDrinks * waterNorm;

          const wineMl = wineDrinks * 150;
          const beerMl = beerDrinks * 330;
          const spiritsMl = spiritsDrinks * 45;
          const softMl = softDrinks * 250;
          const juiceMl = juiceDrinks * 250;
          const waterMl = waterDrinks * 250;

          const wineBottles = wineMl / 750;
          const beerBottles = beerMl / 330;
          const spiritsBottles = spiritsMl / 700;
          const softLiters = softMl / 1000;
          const juiceLiters = juiceMl / 1000;
          const waterLiters = waterMl / 1000;

          const totalGuests = adults + kids;
          const baseIcePerGuestKg = 0.7;
          const durationFactor = Math.min(1.5, Math.max(0.7, duration / 4));
          const iceKg = totalGuests * baseIcePerGuestKg * durationFactor;

          const cards = [];

          if (wineBottles > 0.1) {
            cards.push({
              title: "Wine",
              lines: [
                `${formatNumber(wineBottles, 1)} bottles (750 ml)`,
                `${formatNumber(wineMl / 1000, 1)} L total`,
              ],
            });
          }
          if (beerBottles > 0.1) {
            cards.push({
              title: "Beer",
              lines: [
                `${formatNumber(beerBottles, 0)} bottles/cans (330 ml)`,
                `${formatNumber(beerMl / 1000, 1)} L total`,
              ],
            });
          }
          if (spiritsBottles > 0.1) {
            cards.push({
              title: "Spirits / cocktails",
              lines: [
                `${formatNumber(spiritsBottles, 1)} bottles (700 ml)`,
                `${formatNumber(spiritsMl / 1000, 1)} L total`,
              ],
            });
          }
          if (softLiters > 0.1) {
            cards.push({
              title: "Soft drinks",
              lines: [
                `${formatNumber(softLiters, 1)} L total`,
                `${formatNumber(softDrinks, 0)} servings`,
              ],
            });
          }
          if (juiceLiters > 0.1) {
            cards.push({
              title: "Juice",
              lines: [
                `${formatNumber(juiceLiters, 1)} L total`,
                `${formatNumber(juiceDrinks, 0)} servings`,
              ],
            });
          }
          if (waterLiters > 0.1) {
            cards.push({
              title: "Water",
              lines: [
                `${formatNumber(waterLiters, 1)} L total`,
                `${formatNumber(waterDrinks, 0)} servings`,
              ],
            });
          }

          cards.push({
            title: "Ice",
            lines: [
              `${formatNumber(iceKg, 1)} kg of ice`,
              `${formatNumber(iceKg * 2.205, 1)} lb of ice`,
            ],
          });

          resultsContainer.innerHTML = cards
            .map(
              (card) => `
        <div class="border border-gray-200 rounded-md p-4 card-hover bg-white">
          <h3 class="font-semibold mb-2">${card.title}</h3>
          ${card.lines
            .map((line) => `<p class="text-sm text-gray-700">${line}</p>`)
            .join("")}
        </div>
      `
            )
            .join("");

          const totalDrinks = alcoholDrinks + nonAlcoholDrinks;
          summaryText.textContent =
            `For ${adults} adult${adults !== 1 ? "s" : ""}` +
            (kids > 0 ? ` and ${kids} kid${kids !== 1 ? "s" : ""}` : "") +
            ` over ${duration} hour${
              duration !== 1 ? "s" : ""
            }, we estimate about ` +
            `${formatNumber(totalDrinks, 0)} total drinks (${formatNumber(
              alcoholDrinks,
              0
            )} alcoholic, ` +
            `${formatNumber(nonAlcoholDrinks, 0)} non‑alcoholic).`;
        }

        function resetForm() {
          numAdultsEl.value = 20;
          numKidsEl.value = 5;
          durationEl.value = 4;
          drinkingStyleEl.value = "average";
          alcoholShareEl.value = 70;
          wineShareEl.value = 40;
          beerShareEl.value = 35;
          spiritsShareEl.value = 25;
          softShareEl.value = 60;
          juiceShareEl.value = 25;
          waterShareEl.value = 15;
          updateLabels();
          clearResults();
          errorMessage.classList.add("hidden");
        }

        calculateBtn.addEventListener("click", calculate);
        resetBtn.addEventListener("click", resetForm);

        updateLabels();
        calculate();
      })();
    </script>

