    <script>
      // Constants
      const GRAMS_PER_TSP = 4;
      const LABEL_DV_GRAMS = 50; // 100% DV

      // Tab handling
      const tabButtons = document.querySelectorAll(".sugar-tab");
      const tabPanels = document.querySelectorAll(".sugar-tab-panel");
      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => {
            b.classList.remove("tab-active");
            b.setAttribute("aria-selected", "false");
          });
          tabPanels.forEach((p) => p.classList.add("hidden"));
          btn.classList.add("tab-active");
          btn.setAttribute("aria-selected", "true");
          document.getElementById("tab-" + target).classList.remove("hidden");
        });
      });
      // Activate first tab by default
      if (tabButtons.length) tabButtons[0].classList.add("tab-active");

      // Daily intake calculation
      document
        .getElementById("intake-calc-btn")
        .addEventListener("click", () => {
          const sex = document.getElementById("intake-sex").value;
          const calories = Math.max(
            800,
            Number(document.getElementById("intake-calories").value) || 2000
          );

          // Added sugar
          let added =
            Number(document.getElementById("intake-added-sugar").value) || 0;
          const addedUnit = document.getElementById(
            "intake-added-sugar-unit"
          ).value;
          if (addedUnit === "tsp") added = added * GRAMS_PER_TSP;

          // Total sugar (optional)
          let total = Number(
            document.getElementById("intake-total-sugar").value
          );
          const totalUnit = document.getElementById(
            "intake-total-sugar-unit"
          ).value;
          if (!isNaN(total)) {
            if (totalUnit === "tsp") total = total * GRAMS_PER_TSP;
          } else {
            total = null;
          }

          // Sugary drinks estimate
          const drinks =
            Number(document.getElementById("intake-drinks").value) || 0;
          const drinkSugarPerServing = 37; // g per typical soda
          const drinkSugar = drinks * drinkSugarPerServing;
          added += drinkSugar;

          // WHO limits
          const upperLimitG = (calories * 0.1) / 4; // 4 kcal/g
          const idealLimitG = (calories * 0.05) / 4;

          const whoPercent = upperLimitG > 0 ? (added / upperLimitG) * 100 : 0;
          const idealPercent =
            idealLimitG > 0 ? (added / idealLimitG) * 100 : 0;

          document.getElementById("intake-added-g").textContent =
            added.toFixed(1);
          document.getElementById("intake-added-tsp").textContent = (
            added / GRAMS_PER_TSP
          ).toFixed(1);
          document.getElementById("intake-who-upper").textContent =
            upperLimitG.toFixed(1);
          document.getElementById("intake-who-ideal").textContent =
            idealLimitG.toFixed(1);
          document.getElementById("intake-who-percent").textContent =
            whoPercent.toFixed(0);
          document.getElementById("intake-who-ideal-percent").textContent =
            idealPercent.toFixed(0);

          let msg;
          if (idealPercent <= 50) {
            msg =
              "Your added sugar intake is relatively low compared with common guideline targets.";
          } else if (idealPercent <= 100) {
            msg =
              "Your added sugar intake is within or close to the ideal target range for most people.";
          } else if (idealPercent <= 200) {
            msg =
              "Your added sugar intake is above the ideal target. Consider cutting back on sugary drinks and highly sweetened foods.";
          } else {
            msg =
              "Your added sugar intake is well above recommended levels. Reducing sugary drinks and processed sweets could significantly lower your risk of weight gain and metabolic issues.";
          }

          if (total !== null && total > 0) {
            msg += ` You reported about ${total.toFixed(
              1
            )} g total sugar (including natural sugars).`;
          }

          if (drinkSugar > 0) {
            msg += ` Roughly ${(drinkSugar / GRAMS_PER_TSP).toFixed(
              1
            )} tsp of your added sugar came from drinks.`;
          }

          document.getElementById("intake-interpretation").textContent = msg;
          document.getElementById("intake-results").classList.remove("hidden");
        });

      // Drinks & foods dynamic table
      const itemsTbody = document.getElementById("items-tbody");
      const itemsResults = document.getElementById("items-results");

      const presets = [
        {
          name: "Soda (12 oz / 330 ml)",
          category: "Drink",
          sugarPerServing: 37,
        },
        {
          name: "Energy drink (8.4 oz / 250 ml)",
          category: "Drink",
          sugarPerServing: 27,
        },
        {
          name: "Sweetened iced tea (16 oz / 475 ml)",
          category: "Drink",
          sugarPerServing: 45,
        },
        {
          name: "Fruit juice (8 oz / 240 ml)",
          category: "Drink",
          sugarPerServing: 24,
        },
        {
          name: "Flavored yogurt (single cup)",
          category: "Food",
          sugarPerServing: 20,
        },
        {
          name: "Chocolate bar (standard)",
          category: "Food",
          sugarPerServing: 25,
        },
      ];

      function createRow(preset) {
        const tr = document.createElement("tr");
        tr.className = "border-t";

        tr.innerHTML = `
      <td class="px-2 py-1">
        <input type="text" class="w-full border rounded-md px-2 py-1 text-xs item-name" value="${
          preset ? preset.name : ""
        }" placeholder="e.g. soda, cookie">
      </td>
      <td class="px-2 py-1">
        <select class="w-full border rounded-md px-2 py-1 text-xs item-category">
          <option value="Drink"${
            preset && preset.category === "Drink" ? " selected" : ""
          }>Drink</option>
          <option value="Food"${
            preset && preset.category === "Food" ? " selected" : ""
          }>Food</option>
        </select>
      </td>
      <td class="px-2 py-1">
        <input type="number" min="0" step="0.25" class="w-full border rounded-md px-2 py-1 text-xs item-servings" value="1">
      </td>
      <td class="px-2 py-1">
        <input type="number" min="0" step="0.1" class="w-full border rounded-md px-2 py-1 text-xs item-sugar-per-serving" value="${
          preset ? preset.sugarPerServing : ""
        }">
      </td>
      <td class="px-2 py-1">
        <select class="w-full border rounded-md px-2 py-1 text-xs item-unit">
          <option value="g">g</option>
          <option value="tsp">tsp</option>
        </select>
      </td>
      <td class="px-2 py-1 text-right text-xs item-total-g">0</td>
      <td class="px-2 py-1 text-center">
        <button type="button" class="text-red-500 text-xs remove-item-btn">Remove</button>
      </td>
    `;

        itemsTbody.appendChild(tr);
        attachRowListeners(tr);
      }

      function attachRowListeners(tr) {
        const inputs = tr.querySelectorAll(
          ".item-servings, .item-sugar-per-serving, .item-unit"
        );
        inputs.forEach((inp) => inp.addEventListener("input", recalcItems));
        const removeBtn = tr.querySelector(".remove-item-btn");
        removeBtn.addEventListener("click", () => {
          tr.remove();
          recalcItems();
        });
      }

      function recalcItems() {
        let totalG = 0;
        itemsTbody.querySelectorAll("tr").forEach((tr) => {
          const servings =
            Number(tr.querySelector(".item-servings").value) || 0;
          let sugarPerServing =
            Number(tr.querySelector(".item-sugar-per-serving").value) || 0;
          const unit = tr.querySelector(".item-unit").value;
          if (unit === "tsp") sugarPerServing *= GRAMS_PER_TSP;
          const itemTotal = servings * sugarPerServing;
          totalG += itemTotal;
          tr.querySelector(".item-total-g").textContent = itemTotal.toFixed(1);
        });

        if (totalG > 0) {
          const totalTsp = totalG / GRAMS_PER_TSP;
          const pct50 = (totalG / 50) * 100;
          document.getElementById("items-total-g").textContent =
            totalG.toFixed(1);
          document.getElementById("items-total-tsp").textContent =
            totalTsp.toFixed(1);
          document.getElementById("items-percent-50").textContent =
            pct50.toFixed(0);

          let msg;
          if (pct50 <= 50) {
            msg =
              "Your listed items account for less than half of a 50 g daily added sugar limit.";
          } else if (pct50 <= 100) {
            msg =
              "Your listed items are close to or at a 50 g daily added sugar limit.";
          } else {
            msg =
              "Your listed items alone exceed a 50 g daily added sugar limit. Consider swapping some drinks or snacks for lower‑sugar options.";
          }
          document.getElementById("items-interpretation").textContent = msg;
          itemsResults.classList.remove("hidden");
        } else {
          itemsResults.classList.add("hidden");
        }
      }

      document
        .getElementById("add-item-btn")
        .addEventListener("click", () => createRow());
      document
        .getElementById("reset-items-btn")
        .addEventListener("click", () => {
          itemsTbody.innerHTML = "";
          itemsResults.classList.add("hidden");
          // Re-add a couple of preset rows for convenience
          createRow(presets[0]);
          createRow(presets[4]);
          recalcItems();
        });

      // Initialize with a few presets
      presets.slice(0, 3).forEach((p) => createRow(p));
      recalcItems();

      // Label converter
      const labelGrams = document.getElementById("label-grams");
      const labelTsp = document.getElementById("label-tsp");
      const labelPct = document.getElementById("label-pct");
      const labelSummary = document.getElementById("label-summary");

      function fromGrams() {
        const g = Number(labelGrams.value);
        if (isNaN(g) || g < 0) return;
        const tsp = g / GRAMS_PER_TSP;
        const pct = (g / LABEL_DV_GRAMS) * 100;
        labelTsp.value = tsp.toFixed(2);
        labelPct.value = pct.toFixed(1);
        labelSummary.textContent = `${g.toFixed(1)} g sugar ≈ ${tsp.toFixed(
          1
        )} teaspoons and ${pct.toFixed(0)}% of the 50 g Daily Value.`;
      }

      function fromTsp() {
        const tsp = Number(labelTsp.value);
        if (isNaN(tsp) || tsp < 0) return;
        const g = tsp * GRAMS_PER_TSP;
        const pct = (g / LABEL_DV_GRAMS) * 100;
        labelGrams.value = g.toFixed(1);
        labelPct.value = pct.toFixed(1);
        labelSummary.textContent = `${tsp.toFixed(
          1
        )} teaspoons sugar ≈ ${g.toFixed(1)} g and ${pct.toFixed(
          0
        )}% of the 50 g Daily Value.`;
      }

      function fromPct() {
        const pct = Number(labelPct.value);
        if (isNaN(pct) || pct < 0) return;
        const g = (pct / 100) * LABEL_DV_GRAMS;
        const tsp = g / GRAMS_PER_TSP;
        labelGrams.value = g.toFixed(1);
        labelTsp.value = tsp.toFixed(2);
        labelSummary.textContent = `${pct.toFixed(
          1
        )}% of Daily Value ≈ ${g.toFixed(1)} g sugar (${tsp.toFixed(
          1
        )} teaspoons).`;
      }

      document
        .getElementById("label-from-grams-btn")
        .addEventListener("click", fromGrams);
      document
        .getElementById("label-from-tsp-btn")
        .addEventListener("click", fromTsp);
      document
        .getElementById("label-from-pct-btn")
        .addEventListener("click", fromPct);
      document
        .getElementById("label-reset-btn")
        .addEventListener("click", () => {
          labelGrams.value = "";
          labelTsp.value = "";
          labelPct.value = "";
          labelSummary.textContent = "";
        });

      // Allow quick conversions on Enter key
      labelGrams.addEventListener("keydown", (e) => {
        if (e.key === "Enter") fromGrams();
      });
      labelTsp.addEventListener("keydown", (e) => {
        if (e.key === "Enter") fromTsp();
      });
      labelPct.addEventListener("keydown", (e) => {
        if (e.key === "Enter") fromPct();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
