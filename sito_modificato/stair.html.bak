    <script>
      function toInches(value, unit) {
        return unit === "cm" ? value / 2.54 : value;
      }
      function fromInchesToCm(value) {
        return value * 2.54;
      }
      function formatInches(val) {
        return val.toFixed(2) + " in";
      }
      function formatCm(val) {
        return val.toFixed(1) + " cm";
      }

      function calculateStair() {
        const totalRiseInput = parseFloat(
          document.getElementById("totalRise").value
        );
        const riseUnit = document.getElementById("riseUnit").value;
        const targetRiserInput = parseFloat(
          document.getElementById("maxRiser").value
        );
        const riserUnit = document.getElementById("riserUnit").value;
        const targetTreadInput = parseFloat(
          document.getElementById("minTread").value
        );
        const treadUnit = document.getElementById("treadUnit").value;
        const stringerThicknessInput = parseFloat(
          document.getElementById("stringerThickness").value
        );
        const stringerUnit = document.getElementById("stringerUnit").value;
        const headroomInput = parseFloat(
          document.getElementById("headroom").value
        );
        const headroomUnit = document.getElementById("headroomUnit").value;
        const landingLengthInput = parseFloat(
          document.getElementById("landingLength").value
        );
        const landingUnit = document.getElementById("landingUnit").value;
        const noseInput = parseFloat(document.getElementById("nose").value);
        const noseUnit = document.getElementById("noseUnit").value;

        if (
          isNaN(totalRiseInput) ||
          isNaN(targetRiserInput) ||
          isNaN(targetTreadInput)
        ) {
          alert(
            "Please enter at least total rise, target riser height, and tread depth."
          );
          return;
        }

        const H_total = toInches(totalRiseInput, riseUnit);
        const R_target = toInches(targetRiserInput, riserUnit);
        const T_target = toInches(targetTreadInput, treadUnit);
        const stringerThk = toInches(
          stringerThicknessInput || 1.5,
          stringerUnit
        );
        const headroomMin = toInches(headroomInput || 80, headroomUnit);
        const availableRun = toInches(landingLengthInput || 9999, landingUnit);
        const nose = toInches(noseInput || 0, noseUnit);

        let N_r = Math.round(H_total / R_target);
        if (N_r < 2) N_r = 2;
        const R = H_total / N_r;
        const N_t = N_r - 1;
        const T = T_target;
        const L_run = N_t * T;
        const angleRad = Math.atan(H_total / L_run);
        const angleDeg = (angleRad * 180) / Math.PI;
        const L_stringer = Math.sqrt(H_total * H_total + L_run * L_run);

        const plumbCut = R;
        const seatCut = T;

        const headroomApprox = headroomMin; // placeholder: we don't model structure above; show requested min

        const comfort = 2 * R + T;

        const withinRise = R >= 7 && R <= 7.75;
        const withinTread = T >= 10 && T <= 11.5;
        const withinAngle = angleDeg >= 30 && angleDeg <= 38;
        const withinRun = L_run <= availableRun + 0.01;

        let status = "Check details";
        let statusColor = "text-yellow-700";
        if (withinRise && withinTread && withinAngle && withinRun) {
          status =
            "Good residential stair proportions (verify with local code).";
          statusColor = "text-green-700";
        } else if (!withinRun) {
          status =
            "Total run exceeds available horizontal space – consider a landing or steeper stair.";
          statusColor = "text-red-700";
        } else if (!withinRise) {
          status =
            "Riser height outside common residential range – adjust target riser or total rise.";
          statusColor = "text-red-700";
        } else if (!withinTread) {
          status =
            "Tread depth outside common residential range – adjust target tread.";
          statusColor = "text-red-700";
        }

        document.getElementById("numRisers").textContent = N_r;
        document.getElementById("numTreads").textContent = N_t;
        document.getElementById("riserHeight").textContent = formatInches(R);
        document.getElementById("treadDepth").textContent = formatInches(T);
        document.getElementById("totalRun").textContent = formatInches(L_run);
        document.getElementById("stairAngle").textContent =
          angleDeg.toFixed(1) + "°";
        document.getElementById("stringerLength").textContent =
          formatInches(L_stringer);
        document.getElementById("plumbCut").textContent =
          formatInches(plumbCut);
        document.getElementById("seatCut").textContent = formatInches(seatCut);
        document.getElementById("headroomResult").textContent = headroomApprox
          ? formatInches(headroomApprox) + " (user target)"
          : "–";
        document.getElementById("comfortRule").textContent =
          comfort.toFixed(2) + " in (2R + T)";

        const statusEl = document.getElementById("statusText");
        statusEl.textContent = status;
        statusEl.className = "font-semibold " + statusColor;

        const metricToggle = document.getElementById("metricToggle").checked;
        const metricBox = document.getElementById("metricResults");
        if (metricToggle) {
          metricBox.classList.remove("hidden");
          document.getElementById("riserHeightMetric").textContent = formatCm(
            fromInchesToCm(R)
          );
          document.getElementById("treadDepthMetric").textContent = formatCm(
            fromInchesToCm(T)
          );
          document.getElementById("totalRunMetric").textContent = formatCm(
            fromInchesToCm(L_run)
          );
          document.getElementById("stringerLengthMetric").textContent =
            formatCm(fromInchesToCm(L_stringer));
        } else {
          metricBox.classList.add("hidden");
        }

        const layoutLines = [];
        layoutLines.push("Stair stringer layout (approximate):");
        layoutLines.push("");
        layoutLines.push("- Use a framing square with:");
        layoutLines.push("  • Rise leg set to " + R.toFixed(3) + " in");
        layoutLines.push("  • Run leg set to " + T.toFixed(3) + " in");
        layoutLines.push("");
        layoutLines.push("- Starting from the bottom of the stringer:");
        layoutLines.push(
          "  • Mark " + N_t + " treads and " + N_r + " risers using the square."
        );
        layoutLines.push(
          "  • Bottom seat cut depth ≈ " + seatCut.toFixed(2) + " in."
        );
        layoutLines.push(
          "  • Top plumb cut depth ≈ " + plumbCut.toFixed(2) + " in."
        );
        layoutLines.push("");
        layoutLines.push(
          "- Stringer stock thickness: " +
            stringerThk.toFixed(2) +
            " in (e.g., 2×12 ≈ 1.5 in)."
        );
        layoutLines.push(
          "- Check that remaining wood depth at the narrowest point meets your structural requirements."
        );
        layoutLines.push("");
        layoutLines.push(
          "Note: Always verify final dimensions, headroom, and guard/handrail details against your local building code before cutting or installing."
        );

        document.getElementById("stringerLayout").textContent =
          layoutLines.join("\n");
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateStair);
      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("stairForm").reset();
          document.getElementById("totalRise").value = 108;
          document.getElementById("maxRiser").value = 7.5;
          document.getElementById("minTread").value = 10;
          document.getElementById("stringerThickness").value = 1.5;
          document.getElementById("headroom").value = 80;
          document.getElementById("landingLength").value = 144;
          document.getElementById("nose").value = 1;
          document.getElementById("metricResults").classList.add("hidden");
          document.getElementById("numRisers").textContent = "–";
          document.getElementById("numTreads").textContent = "–";
          document.getElementById("riserHeight").textContent = "–";
          document.getElementById("treadDepth").textContent = "–";
          document.getElementById("totalRun").textContent = "–";
          document.getElementById("stairAngle").textContent = "–";
          document.getElementById("stringerLength").textContent = "–";
          document.getElementById("plumbCut").textContent = "–";
          document.getElementById("seatCut").textContent = "–";
          document.getElementById("headroomResult").textContent = "–";
          document.getElementById("comfortRule").textContent = "–";
          document.getElementById("statusText").textContent = "–";
          document.getElementById("statusText").className = "font-semibold";
          document.getElementById("stringerLayout").textContent =
            "Enter dimensions and click “Calculate stair” to see layout instructions.";
        });
    </script>

