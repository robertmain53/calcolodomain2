    <script>
      // Core data: relative glucocorticoid potency vs hydrocortisone = 1
      // and a representative "equivalent" dose close to standard tables.
      const steroids = [
        {
          id: "hydrocortisone",
          name: "Hydrocortisone",
          potency: 1, // 20 mg = 1 unit
          eqDose: 20,
          mineral: 1,
          color: "bg-sky-50",
        },
        {
          id: "cortisone",
          name: "Cortisone acetate",
          potency: 0.8, // 25 mg ≈ 1 unit
          eqDose: 25,
          mineral: 0.8,
          color: "bg-slate-50",
        },
        {
          id: "prednisone",
          name: "Prednisone",
          potency: 4, // 5 mg = 1 unit
          eqDose: 5,
          mineral: 0.6,
          color: "bg-blue-50",
        },
        {
          id: "prednisolone",
          name: "Prednisolone",
          potency: 4,
          eqDose: 5,
          mineral: 0.6,
          color: "bg-slate-50",
        },
        {
          id: "methylprednisolone",
          name: "Methylprednisolone",
          potency: 5, // 4 mg = 1 unit
          eqDose: 4,
          mineral: 0.5,
          color: "bg-slate-50",
        },
        {
          id: "triamcinolone",
          name: "Triamcinolone",
          potency: 5,
          eqDose: 4,
          mineral: 0,
          color: "bg-slate-50",
        },
        {
          id: "betamethasone",
          name: "Betamethasone",
          potency: 25, // 0.75 mg ≈ 1 unit
          eqDose: 0.75,
          mineral: 0,
          color: "bg-slate-50",
        },
        {
          id: "dexamethasone",
          name: "Dexamethasone",
          potency: 25,
          eqDose: 0.75,
          mineral: 0,
          color: "bg-slate-50",
        },
      ];

      const inputDrugSelect = document.getElementById("inputDrug");
      const inputDoseEl = document.getElementById("inputDose");
      const convertBtn = document.getElementById("convertBtn");
      const resetBtn = document.getElementById("resetBtn");
      const errorBox = document.getElementById("errorBox");
      const resultsCard = document.getElementById("resultsCard");
      const resultsBody = document.getElementById("resultsBody");
      const resultsSummary = document.getElementById("resultsSummary");

      // Populate dropdown
      function populateDrugSelect() {
        steroids.forEach((drug) => {
          const opt = document.createElement("option");
          opt.value = drug.id;
          opt.textContent = drug.name;
          if (drug.id === "prednisone") opt.selected = true;
          inputDrugSelect.appendChild(opt);
        });
      }

      function showError(msg) {
        errorBox.textContent = msg;
        errorBox.classList.remove("hidden");
        resultsCard.classList.add("hidden");
      }

      function clearError() {
        errorBox.classList.add("hidden");
        errorBox.textContent = "";
      }

      function formatDose(val) {
        if (!isFinite(val)) return "";
        if (val === 0) return "0";
        if (val < 0.01) return val.toExponential(2);
        if (val < 1) return val.toFixed(3);
        if (val < 10) return val.toFixed(2);
        if (val < 100) return val.toFixed(1);
        return val.toFixed(0);
      }

      function convert() {
        clearError();
        const dose = parseFloat(inputDoseEl.value);
        if (isNaN(dose) || dose <= 0) {
          showError("Please enter a positive numeric dose in mg/day.");
          return;
        }
        const inputDrugId = inputDrugSelect.value;
        const inputDrug = steroids.find((d) => d.id === inputDrugId);
        if (!inputDrug) {
          showError("Unknown input drug selection.");
          return;
        }

        // Convert to hydrocortisone-equivalent "units"
        // units = D_in * potency_in / 20
        const units = (dose * inputDrug.potency) / 20;

        // Build results
        resultsBody.innerHTML = "";
        steroids.forEach((drug) => {
          const eqDose = (units * 20) / drug.potency;
          const tr = document.createElement("tr");
          if (drug.id === inputDrug.id) {
            tr.className = "bg-yellow-50";
          }
          tr.innerHTML = `
        <td class="px-3 py-2 whitespace-nowrap">
          <span class="inline-flex items-center gap-1">
            <span class="w-2 h-2 rounded-full ${
              drug.id === inputDrug.id ? "bg-yellow-500" : "bg-blue-400"
            }"></span>
            <span class="font-medium">${drug.name}</span>
          </span>
        </td>
        <td class="px-3 py-2 text-right">${formatDose(eqDose)}</td>
        <td class="px-3 py-2 text-right">${drug.potency}</td>
        <td class="px-3 py-2 text-right hidden md:table-cell">${
          drug.mineral
        }</td>
      `;
          resultsBody.appendChild(tr);
        });

        resultsSummary.textContent = `${formatDose(dose)} mg/day of ${
          inputDrug.name
        } is approximately equivalent to the doses below, based on standard anti-inflammatory potency. Values are approximate and should be interpreted clinically.`;
        resultsCard.classList.remove("hidden");
      }

      function resetForm() {
        inputDrugSelect.value = "prednisone";
        inputDoseEl.value = "";
        clearError();
        resultsCard.classList.add("hidden");
      }

      document.addEventListener("DOMContentLoaded", () => {
        populateDrugSelect();
      });

      convertBtn.addEventListener("click", convert);
      resetBtn.addEventListener("click", resetForm);
      inputDoseEl.addEventListener("keydown", (e) => {
        if (e.key === "Enter") {
          e.preventDefault();
          convert();
        }
      });
    </script>

