    <script>
      // IBU calculator logic
      (function () {
        const hopRowsContainer = document.getElementById("hop-rows");
        const addHopBtn = document.getElementById("add-hop-btn");
        const resetBtn = document.getElementById("reset-btn");
        const totalIbuEl = document.getElementById("total-ibu");
        const formulaLabelEl = document.getElementById("formula-label");
        const styleSelect = document.getElementById("style-select");
        const styleFeedback = document.getElementById("style-feedback");

        const batchVolumeEl = document.getElementById("batch-volume");
        const batchVolumeUnitEl = document.getElementById("batch-volume-unit");
        const ogEl = document.getElementById("og");
        const whirlpoolTempEl = document.getElementById("whirlpool-temp");

        function createHopRow(defaults = {}) {
          const row = document.createElement("div");
          row.className = "hop-row-grid items-center";

          row.innerHTML = `
        <input type="text" class="border rounded-md px-2 py-1 text-sm" placeholder="Hop name" value="${
          defaults.name || ""
        }">
        <input type="number" class="input-number border rounded-md px-2 py-1 text-sm hop-aa" min="0" step="0.1" value="${
          defaults.aa || 10
        }">
        <div class="flex gap-1 items-center">
          <input type="number" class="input-number border rounded-md px-2 py-1 text-sm hop-weight flex-1" min="0" step="0.1" value="${
            defaults.weight || 20
          }">
          <select class="border rounded-md px-1 py-1 text-xs hop-weight-unit">
            <option value="g"${
              defaults.unit === "g" || !defaults.unit ? " selected" : ""
            }>g</option>
            <option value="oz"${
              defaults.unit === "oz" ? " selected" : ""
            }>oz</option>
          </select>
        </div>
        <input type="number" class="input-number border rounded-md px-2 py-1 text-sm hop-time" min="0" step="1" value="${
          defaults.time || 60
        }">
        <select class="border rounded-md px-2 py-1 text-sm hop-use">
          <option value="boil"${
            defaults.use === "boil" || !defaults.use ? " selected" : ""
          }>Boil</option>
          <option value="whirlpool"${
            defaults.use === "whirlpool" ? " selected" : ""
          }>Whirlpool</option>
          <option value="flameout"${
            defaults.use === "flameout" ? " selected" : ""
          }>Flameout (0 min)</option>
        </select>
        <select class="border rounded-md px-2 py-1 text-sm hop-form lg-only">
          <option value="pellet"${
            defaults.form === "pellet" || !defaults.form ? " selected" : ""
          }>Pellet</option>
          <option value="whole"${
            defaults.form === "whole" ? " selected" : ""
          }>Whole/Leaf</option>
        </select>
        <button type="button" class="text-xs text-red-600 hover:underline remove-hop">Remove</button>
      `;

          hopRowsContainer.appendChild(row);
        }

        function getSelectedFormula() {
          const radios = document.querySelectorAll('input[name="formula"]');
          for (const r of radios) {
            if (r.checked) return r.value;
          }
          return "tinseth";
        }

        function toLiters(volume, unit) {
          return unit === "gal" ? volume * 3.78541 : volume;
        }

        function gramsFrom(weight, unit) {
          return unit === "oz" ? weight * 28.3495 : weight;
        }

        function tinsethUtilization(timeMin, og) {
          if (timeMin <= 0) return 0;
          const bigness = 1.65 * Math.pow(0.000125, og - 1);
          const boilFactor = (1 - Math.exp(-0.04 * timeMin)) / 4.15;
          return bigness * boilFactor;
        }

        function ragerUtilization(timeMin) {
          // Rager utilization curve (percentage)
          return (18.11 + 13.86 * Math.tanh((timeMin - 31.32) / 18.27)) / 100;
        }

        function whirlpoolTempFactor(tempC) {
          const t = parseFloat(tempC);
          if (isNaN(t)) return 0.5;
          const f = (t - 60) / 40; // 60–100°C -> 0–1
          return Math.max(0, Math.min(1, f));
        }

        function recalc() {
          const formula = getSelectedFormula();
          formulaLabelEl.textContent =
            formula === "tinseth" ? "Tinseth" : "Rager";

          const og = parseFloat(ogEl.value) || 1.05;
          const batchVol = Math.max(0.1, parseFloat(batchVolumeEl.value) || 20);
          const batchVolL = toLiters(batchVol, batchVolumeUnitEl.value);
          const whirlTemp = parseFloat(whirlpoolTempEl.value) || 80;
          const tempFactor = whirlpoolTempFactor(whirlTemp);

          let totalIbu = 0;

          hopRowsContainer.querySelectorAll(".hop-row-grid").forEach((row) => {
            const aa = parseFloat(row.querySelector(".hop-aa").value) || 0;
            const weight =
              parseFloat(row.querySelector(".hop-weight").value) || 0;
            const weightUnit = row.querySelector(".hop-weight-unit").value;
            const time = parseFloat(row.querySelector(".hop-time").value) || 0;
            const use = row.querySelector(".hop-use").value;
            const formSel = row.querySelector(".hop-form");
            const form = formSel ? formSel.value : "pellet";

            if (aa <= 0 || weight <= 0) return;

            let ibu = 0;

            if (formula === "tinseth") {
              let effTime = time;
              let u;

              if (use === "boil") {
                u = tinsethUtilization(effTime, og);
              } else if (use === "whirlpool") {
                // Treat as whirlpool: time is hop stand duration
                u = tinsethUtilization(effTime, og) * tempFactor;
              } else {
                // flameout
                // Approximate as short whirlpool at whirlpool temp
                u = tinsethUtilization(10, og) * tempFactor;
              }

              if (form === "pellet") {
                u *= 1.1; // 10% boost for pellets
              }

              const grams = gramsFrom(weight, weightUnit);
              const alphaFrac = aa / 100;
              ibu = (u * alphaFrac * grams * 1000) / batchVolL;
            } else {
              // Rager: work in gallons/ounces
              const volGal =
                batchVolUnitEl.value === "gal" ? batchVol : batchVol / 3.78541;
              const oz = weightUnit === "oz" ? weight : weight / 28.3495;
              let effTime = time;

              if (use === "whirlpool") {
                effTime = time; // treat as boil time but scaled by temp
              } else if (use === "flameout") {
                effTime = 10;
              }

              let u = ragerUtilization(effTime);
              if (use !== "boil") {
                u *= tempFactor;
              }
              if (form === "pellet") {
                u *= 1.1;
              }

              let gravityFactor = 0;
              if (og > 1.05) {
                gravityFactor = (og - 1.05) / 0.2;
              }

              ibu = (u * aa * oz * 7462) / (volGal * (1 + gravityFactor));
            }

            if (!isNaN(ibu) && ibu > 0) {
              totalIbu += ibu;
            }
          });

          totalIbuEl.textContent = totalIbu.toFixed(1);
          updateStyleFeedback(totalIbu);
        }

        function updateStyleFeedback(ibu) {
          const val = styleSelect.value;
          if (!val) {
            styleFeedback.textContent =
              "Choose a style to see if your current IBUs are in range.";
            styleFeedback.className = "text-xs text-gray-600";
            return;
          }
          const parts = val.split("-");
          const min = parseFloat(parts[0]);
          const max = parseFloat(parts[1]);
          if (isNaN(min) || isNaN(max)) return;

          if (ibu < min) {
            styleFeedback.textContent = `Your beer is below the suggested range (${min}–${max} IBU). Consider adding more or earlier hops.`;
            styleFeedback.className = "text-xs text-amber-700";
          } else if (ibu > max) {
            styleFeedback.textContent = `Your beer is above the suggested range (${min}–${max} IBU). Reduce early bittering hops or shorten boil time.`;
            styleFeedback.className = "text-xs text-red-700";
          } else {
            styleFeedback.textContent = `Your beer is within the suggested range (${min}–${max} IBU) for this style.`;
            styleFeedback.className = "text-xs text-green-700";
          }
        }

        function bindEvents() {
          addHopBtn.addEventListener("click", () => {
            createHopRow();
            recalc();
          });

          resetBtn.addEventListener("click", () => {
            batchVolumeEl.value = 20;
            batchVolumeUnitEl.value = "l";
            ogEl.value = 1.05;
            whirlpoolTempEl.value = 80;
            document.querySelector(
              'input[name="formula"][value="tinseth"]'
            ).checked = true;
            styleSelect.value = "";
            styleFeedback.textContent =
              "Choose a style to see if your current IBUs are in range.";
            styleFeedback.className = "text-xs text-gray-600";
            hopRowsContainer.innerHTML = "";
            seedDefaultHops();
            recalc();
          });

          ["change", "input"].forEach((evt) => {
            document.addEventListener(evt, (e) => {
              if (
                e.target.matches(
                  "#batch-volume, #batch-volume-unit, #og, #whirlpool-temp, #style-select"
                ) ||
                e.target.matches('input[name="formula"]') ||
                e.target.closest("#hop-rows")
              ) {
                recalc();
              }
            });
          });

          hopRowsContainer.addEventListener("click", (e) => {
            if (e.target.classList.contains("remove-hop")) {
              const row = e.target.closest(".hop-row-grid");
              if (row) {
                row.remove();
                recalc();
              }
            }
          });
        }

        function seedDefaultHops() {
          createHopRow({
            name: "Bittering hop",
            aa: 12,
            weight: 20,
            unit: "g",
            time: 60,
            use: "boil",
            form: "pellet",
          });
          createHopRow({
            name: "Flavor hop",
            aa: 8,
            weight: 25,
            unit: "g",
            time: 15,
            use: "boil",
            form: "pellet",
          });
          createHopRow({
            name: "Aroma hop",
            aa: 8,
            weight: 30,
            unit: "g",
            time: 10,
            use: "whirlpool",
            form: "pellet",
          });
        }

        seedDefaultHops();
        bindEvents();
        recalc();
      })();
    </script>

