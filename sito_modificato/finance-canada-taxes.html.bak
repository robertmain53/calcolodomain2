          brackets: [
            { upTo: 50000, rate: 0.04 },
            { upTo: 100000, rate: 0.07 },
            { upTo: 155000, rate: 0.09 },
            { upTo: Infinity, rate: 0.115 },
          ],
        },
      };

      function calcProgressiveTax(income, brackets) {
        let remaining = income;
        let tax = 0;
        let lastLimit = 0;
        for (const b of brackets) {
          if (remaining <= 0) break;
          const span = Math.min(remaining, b.upTo - lastLimit);
          if (span > 0) {
            tax += span * b.rate;
            remaining -= span;
          }
          lastLimit = b.upTo;
        }
        return Math.max(tax, 0);
      }

      function formatCurrency(value) {
        return value.toLocaleString("en-CA", {
          style: "currency",
          currency: "CAD",
          maximumFractionDigits: 2,
        });
      }

      document.addEventListener("DOMContentLoaded", () => {
        const rrspToggle = document.getElementById("rrspToggle");
        const rrspSection = document.getElementById("rrspSection");
        const calculateBtn = document.getElementById("calculateBtn");
        const resultsContainer = document.getElementById("resultsContainer");

        rrspToggle.addEventListener("change", () => {
          rrspSection.classList.toggle("hidden", !rrspToggle.checked);
        });

        calculateBtn.addEventListener("click", () => {
          const income =
            parseFloat(document.getElementById("annualIncome").value) || 0;
          const province = document.getElementById("province").value;
          const payPeriods =
            parseInt(document.getElementById("payFrequency").value, 10) || 26;

          if (income <= 0) {
            alert("Please enter a positive annual income.");
            return;
          }

          let rrspAnnual = 0;
          if (rrspToggle.checked) {
            const rrspPercent =
              parseFloat(document.getElementById("rrspPercent").value) || 0;
            rrspAnnual = income * (rrspPercent / 100);
          }

          const taxableIncome = Math.max(income - rrspAnnual, 0);

          // CPP/QPP
          let cppAnnual = 0;
          let eiAnnual = 0;
          if (province === "QC") {
            const qppBase = Math.max(
              Math.min(
                taxableIncome - PARAMS.qppBasicExemption,
                PARAMS.qppMaxEarnings - PARAMS.qppBasicExemption
              ),
              0
            );
            cppAnnual = qppBase * PARAMS.qppRate;
            cppAnnual = Math.min(cppAnnual, PARAMS.qppMaxContribution);

            const qeBase = Math.min(taxableIncome, PARAMS.qeMaxEarnings);
            eiAnnual = qeBase * PARAMS.qeRate;
            eiAnnual = Math.min(eiAnnual, PARAMS.qeMaxContribution);
          } else {
            const cppBase = Math.max(
              Math.min(
                taxableIncome - PARAMS.cppBasicExemption,
                PARAMS.cppMaxEarnings - PARAMS.cppBasicExemption
              ),
              0
            );
            cppAnnual = cppBase * PARAMS.cppRate;
            cppAnnual = Math.min(cppAnnual, PARAMS.cppMaxContribution);

            const eiBase = Math.min(taxableIncome, PARAMS.eiMaxEarnings);
            eiAnnual = eiBase * PARAMS.eiRate;
            eiAnnual = Math.min(eiAnnual, PARAMS.eiMaxContribution);
          }

          // Federal tax
          let federalTax = calcProgressiveTax(taxableIncome, FEDERAL_BRACKETS);
          const fedCredit = FED_BASIC_PERSONAL * FED_LOWEST_RATE;
          federalTax = Math.max(federalTax - fedCredit, 0);

          // Provincial tax
          const prov = PROV_BRACKETS[province];
          let provTax = 0;
          if (prov) {
            provTax = calcProgressiveTax(taxableIncome, prov.brackets);
            const provCredit = prov.basic * prov.lowestRate;
            provTax = Math.max(provTax - provCredit, 0);
          }

          const totalTax = federalTax + provTax;
          const netAnnual =
            income - rrspAnnual - cppAnnual - eiAnnual - totalTax;

          const grossPerPay = income / payPeriods;
          const rrspPerPay = rrspAnnual / payPeriods;
          const cppPerPay = cppAnnual / payPeriods;
          const eiPerPay = eiAnnual / payPeriods;
          const taxPerPay = totalTax / payPeriods;
          const netPerPay = netAnnual / payPeriods;

          document.getElementById("grossAnnual").textContent =
            formatCurrency(income);
          document.getElementById("rrspAnnual").textContent =
            formatCurrency(rrspAnnual);
          document.getElementById("cppAnnual").textContent =
            formatCurrency(cppAnnual);
          document.getElementById("eiAnnual").textContent =
            formatCurrency(eiAnnual);
          document.getElementById("taxAnnual").textContent =
            formatCurrency(totalTax);
          document.getElementById("netAnnual").textContent =
            formatCurrency(netAnnual);

          document.getElementById("grossPerPay").textContent =
            formatCurrency(grossPerPay);
          document.getElementById("rrspPerPay").textContent =
            formatCurrency(rrspPerPay);
          document.getElementById("cppPerPay").textContent =
            formatCurrency(cppPerPay);
          document.getElementById("eiPerPay").textContent =
            formatCurrency(eiPerPay);
          document.getElementById("taxPerPay").textContent =
            formatCurrency(taxPerPay);
          document.getElementById("netPerPay").textContent =
            formatCurrency(netPerPay);

          resultsContainer.classList.remove("hidden");
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
