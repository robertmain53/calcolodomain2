    <script>
      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function formatNg(value) {
        if (!isFinite(value)) return "–";
        if (value >= 1000) return roundTo(value / 1000, 2) + " µg";
        return roundTo(value, 1) + " ng";
      }

      function formatVolume(value) {
        if (!isFinite(value)) return "–";
        if (value >= 1) return roundTo(value, 1) + " µL";
        return Math.round(value * 1000) + " nL";
      }

      function formatMoles(value) {
        if (!isFinite(value)) return "–";
        // value in moles; display in fmol/pmol
        const pmol = value * 1e12;
        if (pmol >= 1) return roundTo(pmol, 2) + " pmol";
        const fmol = value * 1e15;
        return roundTo(fmol, 2) + " fmol";
      }

      document.addEventListener("DOMContentLoaded", function () {
        const ratioButtons = document.querySelectorAll(".ratio-btn");
        const ratioInput = document.getElementById("ratio-insert");
        const bluntCheckbox = document.getElementById("blunt-checkbox");
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorMsg = document.getElementById("error-msg");
        const warningMsg = document.getElementById("warning-msg");
        const resultsSection = document.getElementById("results-section");

        ratioButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            const r = parseFloat(btn.dataset.ratio);
            if (!isNaN(r)) {
              ratioInput.value = r;
            }
          });
        });

        bluntCheckbox.addEventListener("change", () => {
          if (bluntCheckbox.checked) {
            // Suggest a higher ratio if current is low
            const current = parseFloat(ratioInput.value) || 3;
            if (current < 5) ratioInput.value = 5;
          }
        });

        resetBtn.addEventListener("click", () => {
          document.getElementById("vector-size").value = 3000;
          document.getElementById("vector-conc").value = 50;
          document.getElementById("vector-mass").value = 50;
          document.getElementById("insert-size").value = 1000;
          document.getElementById("insert-conc").value = 25;
          ratioInput.value = 3;
          bluntCheckbox.checked = false;
          document.getElementById("total-volume").value = 20;
          document.getElementById("buffer-percent").value = 10;
          document.getElementById("ligase-volume").value = 1;
          errorMsg.textContent = "";
          warningMsg.textContent = "";
          warningMsg.classList.add("hidden");
          resultsSection.classList.add("hidden");
        });

        calcBtn.addEventListener("click", () => {
          errorMsg.textContent = "";
          warningMsg.textContent = "";
          warningMsg.classList.add("hidden");

          const Lv = parseFloat(document.getElementById("vector-size").value);
          const Cv = parseFloat(document.getElementById("vector-conc").value);
          const mv = parseFloat(document.getElementById("vector-mass").value);
          const Li = parseFloat(document.getElementById("insert-size").value);
          const Ci = parseFloat(document.getElementById("insert-conc").value);
          const R = parseFloat(ratioInput.value);
          const Vtot = parseFloat(
            document.getElementById("total-volume").value
          );
          const bufferPercent = parseFloat(
            document.getElementById("buffer-percent").value
          );
          const Vligase = parseFloat(
            document.getElementById("ligase-volume").value
          );

          if (
            [Lv, Cv, mv, Li, Ci, R, Vtot, bufferPercent, Vligase].some(
              (v) => isNaN(v) || v <= 0
            )
          ) {
            errorMsg.textContent =
              "Please enter positive numeric values for all required fields.";
            resultsSection.classList.add("hidden");
            return;
          }

          // moles of vector
          const nv = (mv * 1e-9) / (Lv * 660);
          const ni = R * nv;

          // insert mass (ng)
          const mi = ni * Li * 660 * 1e9;

          // volumes (µL)
          const Vv = mv / Cv;
          const Vi = mi / Ci;

          // reaction mix
          const Vbuffer = (bufferPercent / 100) * Vtot;
          let Vwater = Vtot - (Vv + Vi + Vbuffer + Vligase);

          // Populate results
          document.getElementById("res-vector-moles").textContent =
            formatMoles(nv);
          document.getElementById("res-insert-moles").textContent =
            formatMoles(ni);
          document.getElementById("res-insert-mass").textContent = formatNg(mi);
          document.getElementById("res-vector-vol").textContent =
            formatVolume(Vv);
          document.getElementById("res-insert-vol").textContent =
            formatVolume(Vi);

          document.getElementById("res-mix-vector").textContent =
            formatVolume(Vv);
          document.getElementById("res-mix-insert").textContent =
            formatVolume(Vi);
          document.getElementById("res-mix-buffer").textContent =
            formatVolume(Vbuffer);
          document.getElementById("res-mix-ligase").textContent =
            formatVolume(Vligase);

          if (Vwater < 0) {
            warningMsg.textContent =
              "Warning: DNA, buffer and ligase volumes already exceed the total reaction volume. Increase the total volume, reduce DNA amounts, or adjust buffer/ligase volumes.";
            warningMsg.classList.remove("hidden");
            Vwater = 0;
          } else if (Vwater < 0.5) {
            warningMsg.textContent =
              "Note: Very little water is required. Consider increasing the total volume or reducing DNA amounts for easier pipetting.";
            warningMsg.classList.remove("hidden");
          }

          document.getElementById("res-mix-water").textContent =
            formatVolume(Vwater);
          document.getElementById("res-mix-total").textContent = formatVolume(
            Vv + Vi + Vbuffer + Vligase + Vwater
          );

          resultsSection.classList.remove("hidden");
        });
      });
    </script>

