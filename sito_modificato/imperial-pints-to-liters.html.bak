    <script>
      (function () {
        const FACTOR = 0.56826125; // 1 imperial pint in liters (exact)
        const pintsInput = document.getElementById("pintsInput");
        const litersInput = document.getElementById("litersInput");
        const decimalsSelect = document.getElementById("decimalsSelect");
        const liveExplanation = document.getElementById("liveExplanation");
        const swapBtn = document.getElementById("swapBtn");
        const clearBtn = document.getElementById("clearBtn");
        const modeButtons = document.querySelectorAll(".toggle-unit-btn");

        let activeMode = "pt-to-l";
        let isUpdating = false;

        function formatNumber(value, decimals) {
          if (!isFinite(value)) return "";
          const factor = Math.pow(10, decimals);
          return (Math.round(value * factor) / factor).toFixed(decimals);
        }

        function updateExplanation(from, inputVal, resultVal) {
          const d = parseInt(decimalsSelect.value, 10);
          if (from === "pt" && inputVal !== "" && !isNaN(inputVal)) {
            liveExplanation.textContent =
              inputVal +
              " imperial pint" +
              (Math.abs(inputVal) === 1 ? "" : "s") +
              " × 0.56826125 = " +
              formatNumber(resultVal, d) +
              " L";
          } else if (from === "l" && inputVal !== "" && !isNaN(inputVal)) {
            liveExplanation.textContent =
              inputVal +
              " L ÷ 0.56826125 = " +
              formatNumber(resultVal, d) +
              " imperial pint" +
              (Math.abs(resultVal) === 1 ? "" : "s");
          } else {
            liveExplanation.textContent =
              "Enter a value in either field to see the step-by-step conversion.";
          }
        }

        function convertFromPints() {
          if (isUpdating) return;
          const val = parseFloat(pintsInput.value);
          if (isNaN(val) || val < 0) {
            isUpdating = true;
            litersInput.value = "";
            isUpdating = false;
            updateExplanation(null, "", "");
            return;
          }
          const decimals = parseInt(decimalsSelect.value, 10);
          const liters = val * FACTOR;
          isUpdating = true;
          litersInput.value = formatNumber(liters, decimals);
          isUpdating = false;
          updateExplanation("pt", val, liters);
        }

        function convertFromLiters() {
          if (isUpdating) return;
          const val = parseFloat(litersInput.value);
          if (isNaN(val) || val < 0) {
            isUpdating = true;
            pintsInput.value = "";
            isUpdating = false;
            updateExplanation(null, "", "");
            return;
          }
          const decimals = parseInt(decimalsSelect.value, 10);
          const pints = val / FACTOR;
          isUpdating = true;
          pintsInput.value = formatNumber(pints, decimals);
          isUpdating = false;
          updateExplanation("l", val, pints);
        }

        pintsInput.addEventListener("input", function () {
          activeMode = "pt-to-l";
          setActiveModeButton();
          convertFromPints();
        });

        litersInput.addEventListener("input", function () {
          activeMode = "l-to-pt";
          setActiveModeButton();
          convertFromLiters();
        });

        decimalsSelect.addEventListener("change", function () {
          // Re-run last active conversion to update rounding
          if (activeMode === "pt-to-l" && pintsInput.value !== "") {
            convertFromPints();
          } else if (activeMode === "l-to-pt" && litersInput.value !== "") {
            convertFromLiters();
          }
        });

        swapBtn.addEventListener("click", function () {
          const p = pintsInput.value;
          const l = litersInput.value;
          pintsInput.value = l;
          litersInput.value = p;
          if (l !== "") {
            activeMode = "pt-to-l";
            setActiveModeButton();
            convertFromPints();
          } else if (p !== "") {
            activeMode = "l-to-pt";
            setActiveModeButton();
            convertFromLiters();
          } else {
            updateExplanation(null, "", "");
          }
        });

        clearBtn.addEventListener("click", function () {
          pintsInput.value = "";
          litersInput.value = "";
          updateExplanation(null, "", "");
        });

        function setActiveModeButton() {
          modeButtons.forEach((btn) => {
            if (btn.dataset.mode === activeMode) {
              btn.classList.add("active");
            } else {
              btn.classList.remove("active");
            }
          });
        }

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            activeMode = btn.dataset.mode;
            setActiveModeButton();
            if (activeMode === "pt-to-l" && pintsInput.value !== "") {
              convertFromPints();
            } else if (activeMode === "l-to-pt" && litersInput.value !== "") {
              convertFromLiters();
            }
          });
        });

        // Initialize
        setActiveModeButton();
      })();
    </script>

