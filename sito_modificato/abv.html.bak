    <script>
      // Tabs
      document.querySelectorAll(".abv-tab").forEach((btn) => {
        btn.addEventListener("click", () => {
          const tab = btn.getAttribute("data-tab");
          document
            .querySelectorAll(".abv-tab")
            .forEach((b) => b.classList.remove("tab-active"));
          btn.classList.add("tab-active");
          document
            .querySelectorAll(".abv-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById("tab-" + tab).classList.remove("hidden");
        });
      });

      // OG/FG ABV
      function calcSimpleABV(og, fg) {
        return (og - fg) * 131.25;
      }
      function calcAdvancedABV(og, fg) {
        return ((76.08 * (og - fg)) / (1.775 - og)) * (fg / 0.794);
      }
      function calcAttenuation(og, fg) {
        if (og <= 1) return 0;
        return ((og - fg) / (og - 1)) * 100;
      }

      document.getElementById("calc-ogfg").addEventListener("click", () => {
        const og = parseFloat(document.getElementById("og").value);
        const fg = parseFloat(document.getElementById("fg").value);
        if (isNaN(og) || isNaN(fg) || og <= fg) {
          alert(
            "Please enter valid OG and FG values (OG must be greater than FG)."
          );
          return;
        }
        const formula = document.querySelector(
          'input[name="ogfg-formula"]:checked'
        ).value;
        let abv =
          formula === "advanced"
            ? calcAdvancedABV(og, fg)
            : calcSimpleABV(og, fg);
        if (abv < 0) abv = 0;
        const attenuation = calcAttenuation(og, fg);
        // Alcohol units per 330 mL: units = (ABV% × volume_L) / 10
        const units = (abv * 0.33) / 10;

        document.getElementById("ogfg-abv").textContent = abv.toFixed(2);
        document.getElementById("ogfg-attenuation").textContent =
          attenuation.toFixed(1);
        document.getElementById("ogfg-units").textContent = units.toFixed(2);
        document.getElementById("ogfg-results").classList.remove("hidden");
      });

      // Brix/Plato to SG
      function brixToSG(b) {
        return 1 + b / (258.6 - (b / 258.2) * 227.1);
      }

      document.getElementById("calc-brix").addEventListener("click", () => {
        let bog = parseFloat(document.getElementById("brix-og").value);
        let bfg = parseFloat(document.getElementById("brix-fg").value);
        if (isNaN(bog) || isNaN(bfg) || bog <= bfg) {
          alert(
            "Please enter valid Brix/Plato values (original must be greater than final)."
          );
          return;
        }
        // Plato and Brix are treated the same numerically here
        const og = brixToSG(bog);
        const fg = brixToSG(bfg);
        const abv = calcAdvancedABV(og, fg);
        document.getElementById("brix-abv").textContent = abv.toFixed(2);
        document.getElementById("brix-og-sg").textContent = og.toFixed(3);
        document.getElementById("brix-fg-sg").textContent = fg.toFixed(3);
        document.getElementById("brix-results").classList.remove("hidden");
      });

      // Hydrometer temperature correction (simple linear approximation)
      function hydroCorrectionFactor(tempC, calC) {
        // Approximate correction: 0.0003 SG per 5°C difference
        const diff = tempC - calC;
        return diff * 0.00006; // 0.0003 / 5
      }

      document.getElementById("calc-hydro").addEventListener("click", () => {
        const reading = parseFloat(
          document.getElementById("hydro-reading").value
        );
        const temp = parseFloat(document.getElementById("hydro-temp").value);
        const cal = parseFloat(document.getElementById("hydro-cal").value);
        if (isNaN(reading) || isNaN(temp) || isNaN(cal)) {
          alert("Please enter valid hydrometer values.");
          return;
        }
        const corrected = reading + hydroCorrectionFactor(temp, cal);
        document.getElementById("hydro-corrected").textContent =
          corrected.toFixed(3);
        document.getElementById("hydro-results").classList.remove("hidden");
      });

      // Dilution & blending
      document.getElementById("calc-dilution").addEventListener("click", () => {
        const v1 = parseFloat(document.getElementById("dil-v1").value);
        const a1 = parseFloat(document.getElementById("dil-abv1").value);
        const v2 = parseFloat(document.getElementById("dil-v2").value);
        const a2 = parseFloat(document.getElementById("dil-abv2").value);
        if (
          [v1, a1, v2, a2].some(isNaN) ||
          v1 < 0 ||
          v2 < 0 ||
          a1 < 0 ||
          a2 < 0
        ) {
          alert("Please enter valid volumes and ABV values.");
          return;
        }
        const vf = v1 + v2;
        if (vf === 0) {
          alert("Final volume cannot be zero.");
          return;
        }
        const af = (v1 * a1 + v2 * a2) / vf;
        document.getElementById("dil-vf").textContent = vf.toFixed(2);
        document.getElementById("dil-abvf").textContent = af.toFixed(2);
        document.getElementById("dilution-results").classList.remove("hidden");
      });

      // Simple FAQ toggle (in addition to global script_faq if any)
      document.querySelectorAll(".faq-question").forEach((btn) => {
        btn.addEventListener("click", () => {
          const answer = btn.nextElementSibling;
          if (!answer) return;
          answer.classList.toggle("hidden");
        });
      });

