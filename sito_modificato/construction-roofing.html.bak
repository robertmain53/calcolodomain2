    <script>
      // Roofing calculator logic
      (function () {
        const sectionsBody = document.getElementById("sectionsBody");
        const addSectionBtn = document.getElementById("addSectionBtn");
        const calculateBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const errorMsg = document.getElementById("errorMsg");
        const resultsSection = document.getElementById("resultsSection");

        let sectionCount = 0;

        function addSection(length = 30, width = 20) {
          sectionCount++;
          const row = document.createElement("tr");
          row.dataset.index = sectionCount;
          row.className = "border-t";

          row.innerHTML = `
        <td class="px-2 py-2 text-gray-700">${sectionCount}</td>
        <td class="px-2 py-2">
          <input type="number" min="0" step="0.1" value="${length}"
            class="section-length w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
        </td>
        <td class="px-2 py-2">
          <input type="number" min="0" step="0.1" value="${width}"
            class="section-width w-24 border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
        </td>
        <td class="px-2 py-2 text-gray-700">
          <span class="section-area">–</span>
        </td>
        <td class="px-2 py-2 text-center">
          <button type="button" class="remove-section text-red-600 hover:underline text-xs">Remove</button>
        </td>
      `;
          sectionsBody.appendChild(row);
          updateSectionAreas();
        }

        function updateSectionAreas() {
          const rows = sectionsBody.querySelectorAll("tr");
          rows.forEach((row) => {
            const lenInput = row.querySelector(".section-length");
            const widInput = row.querySelector(".section-width");
            const areaSpan = row.querySelector(".section-area");
            const L = parseFloat(lenInput.value) || 0;
            const W = parseFloat(widInput.value) || 0;
            const area = L * W;
            areaSpan.textContent = area > 0 ? area.toFixed(1) : "0.0";
          });
        }

        function getPitchFactor(pitchRise) {
          const rise = Number(pitchRise);
          if (!rise || rise <= 0) return 1;
          return Math.sqrt(rise * rise + 12 * 12) / 12;
        }

        function getMaterialConfig(type) {
          switch (type) {
            case "metal":
              return {
                label: "Metal panels",
                bundlesPerSquare: 1,
                fastenersPerSquare: 80,
              };
            case "tile":
              return {
                label: "Tile / Slate",
                bundlesPerSquare: 1.1,
                fastenersPerSquare: 120,
              };
            case "flat":
              return {
                label: "Flat / Membrane",
                bundlesPerSquare: 1,
                fastenersPerSquare: 60,
              };
            case "shingle":
            default:
              return {
                label: "Asphalt shingles",
                bundlesPerSquare: 3,
                fastenersPerSquare: 320,
              };
          }
        }

        function formatNumber(num, decimals = 1) {
          if (!isFinite(num)) return "0";
          return Number(num).toFixed(decimals);
        }

        function formatMoney(num) {
          if (!isFinite(num)) return "0";
          return Number(num).toLocaleString(undefined, {
            maximumFractionDigits: 0,
          });
        }

        addSectionBtn.addEventListener("click", () => addSection());

        sectionsBody.addEventListener("input", (e) => {
          if (
            e.target.classList.contains("section-length") ||
            e.target.classList.contains("section-width")
          ) {
            updateSectionAreas();
          }
        });

        sectionsBody.addEventListener("click", (e) => {
          if (e.target.classList.contains("remove-section")) {
            const row = e.target.closest("tr");
            row.remove();
            updateSectionAreas();
          }
        });

        calculateBtn.addEventListener("click", () => {
          errorMsg.textContent = "";
          const rows = sectionsBody.querySelectorAll("tr");
          if (!rows.length) {
            errorMsg.textContent = "Please add at least one roof section.";
            resultsSection.classList.add("hidden");
            return;
          }

          let footprintArea = 0;
          for (const row of rows) {
            const L = parseFloat(row.querySelector(".section-length").value);
            const W = parseFloat(row.querySelector(".section-width").value);
            if (!L || !W || L <= 0 || W <= 0) {
              errorMsg.textContent =
                "All section lengths and widths must be positive numbers.";
              resultsSection.classList.add("hidden");
              return;
            }
            footprintArea += L * W;
          }

          const pitchSelect = document.getElementById("pitch");
          const pitchRise = parseFloat(pitchSelect.value) || 0;
          const pitchFactor = getPitchFactor(pitchRise);

          const slopedArea = footprintArea * pitchFactor;

          const wasteInput = document.getElementById("waste");
          let wastePct = parseFloat(wasteInput.value);
          if (!isFinite(wastePct) || wastePct < 0) wastePct = 0;
          if (wastePct > 40) wastePct = 40;
          wasteInput.value = wastePct.toString();

          const wasteArea = slopedArea * (1 + wastePct / 100);
          const squares = wasteArea / 100;

          const roofType = document.getElementById("roofType").value;
          const cfg = getMaterialConfig(roofType);
          const bundles = squares * cfg.bundlesPerSquare;
          const underlaymentRolls = squares / 4;
          const fasteners = squares * cfg.fastenersPerSquare;

          const materialCostPerSq =
            parseFloat(document.getElementById("materialCost").value) || 0;
          const laborCostPerSq =
            parseFloat(document.getElementById("laborCost").value) || 0;
          const underlaymentCostPerRoll =
            parseFloat(document.getElementById("underlaymentCost").value) || 0;

          const materialCost = squares * materialCostPerSq;
          const laborCost = squares * laborCostPerSq;
          const underlaymentCost = underlaymentRolls * underlaymentCostPerRoll;
          const totalCost = materialCost + laborCost + underlaymentCost;

          document.getElementById("footprintAreaOut").textContent =
            formatNumber(footprintArea);
          document.getElementById("pitchFactorOut").textContent = formatNumber(
            pitchFactor,
            3
          );
          document.getElementById("slopedAreaOut").textContent =
            formatNumber(slopedArea);
          document.getElementById("wasteAreaOut").textContent =
            formatNumber(wasteArea);
          document.getElementById("squaresOut").textContent = formatNumber(
            squares,
            2
          );

          document.getElementById("bundlesOut").textContent = formatNumber(
            bundles,
            1
          );
          document.getElementById("underlaymentOut").textContent =
            Math.ceil(underlaymentRolls).toString();
          document.getElementById("fastenersOut").textContent =
            Math.round(fasteners).toLocaleString();
          document.getElementById("materialLabelOut").textContent = cfg.label;

          document.getElementById("materialCostOut").textContent =
            formatMoney(materialCost);
          document.getElementById("laborCostOut").textContent =
            formatMoney(laborCost);
          document.getElementById("underlaymentCostOut").textContent =
            formatMoney(underlaymentCost);
          document.getElementById("totalCostOut").textContent =
            formatMoney(totalCost);

          resultsSection.classList.remove("hidden");
        });

        resetBtn.addEventListener("click", () => {
          sectionsBody.innerHTML = "";
          addSection();
          document.getElementById("roofType").value = "shingle";
          document.getElementById("pitch").value = "4";
          document.getElementById("waste").value = "10";
          document.getElementById("materialCost").value = "120";
          document.getElementById("laborCost").value = "200";
          document.getElementById("underlaymentCost").value = "40";
          errorMsg.textContent = "";
          resultsSection.classList.add("hidden");
        });

        // Initialize with two typical sections
        addSection(40, 30);
        addSection(20, 10);
      })();
    </script>

