    <script>
      // --- Helper: soil parameters (simplified reference values) ---
      const soilParams = {
        A: { S: 1.0, TB: 0.15, TC: 0.4, TD: 2.0 },
        B: { S: 1.2, TB: 0.15, TC: 0.5, TD: 2.0 },
        C: { S: 1.15, TB: 0.2, TC: 0.6, TD: 2.0 },
        D: { S: 1.35, TB: 0.2, TC: 0.8, TD: 2.0 },
        E: { S: 1.4, TB: 0.15, TC: 0.5, TD: 2.0 },
      };

      // Suggest q based on system and ductility class (very approximate)
      function suggestQ(system, ductility) {
        const base = {
          rcFrame: { DCL: 1.5, DCM: 3.0, DCH: 4.0 },
          rcWall: { DCL: 1.5, DCM: 3.0, DCH: 4.0 },
          steelFrame: { DCL: 1.5, DCM: 4.0, DCH: 5.0 },
          steelBraced: { DCL: 1.5, DCM: 4.0, DCH: 5.0 },
          masonry: { DCL: 1.5, DCM: 2.0, DCH: 2.5 },
        };
        return (base[system] && base[system][ductility]) || 3.0;
      }

      function buildStoreyTableRows(n) {
        const tbody = document.querySelector("#storeyTable tbody");
        tbody.innerHTML = "";
        for (let i = 1; i <= n; i++) {
          const tr = document.createElement("tr");
          const level = n - i + 1; // top storey first
          tr.innerHTML = `
        <td class="text-left">Storey ${level}</td>
        <td><input type="number" step="0.1" min="0" value="${(
          level * 3
        ).toFixed(
          1
        )}" class="w-20 border-gray-300 rounded-md text-right" /></td>
        <td><input type="number" step="1" min="0" value="200" class="w-24 border-gray-300 rounded-md text-right" /></td>
      `;
          tbody.appendChild(tr);
        }
      }

      document
        .getElementById("buildStoreyTable")
        .addEventListener("click", () => {
          const n = parseInt(document.getElementById("numStoreys").value, 10);
          if (isNaN(n) || n < 1 || n > 15) return;
          buildStoreyTableRows(n);
        });

      // Initialize default table
      buildStoreyTableRows(
        parseInt(document.getElementById("numStoreys").value, 10)
      );

      // Auto-suggest q when system or ductility changes
      document.getElementById("systemType").addEventListener("change", () => {
        const q = suggestQ(
          document.getElementById("systemType").value,
          document.getElementById("ductilityClass").value
        );
        document.getElementById("qUser").value = q.toFixed(1);
      });
      document
        .getElementById("ductilityClass")
        .addEventListener("change", () => {
          const q = suggestQ(
            document.getElementById("systemType").value,
            document.getElementById("ductilityClass").value
          );
          document.getElementById("qUser").value = q.toFixed(1);
        });

      function computeEta(dampingPercent) {
        const xi = Math.max(0.5, Math.min(30, dampingPercent));
        return Math.sqrt(10 / (5 + xi));
      }

      function computeElasticSpectrum(T, ag, S, TB, TC, TD, beta, eta) {
        // Returns Se(T) in units of g (dimensionless multiplier)
        if (T <= TB) {
          return ag * S * eta * (1 + (T / TB) * (beta - 1));
        } else if (T <= TC) {
          return ag * S * eta * beta;
        } else if (T <= TD) {
          return ag * S * eta * beta * (TC / T);
        } else {
          // Long-period tail not fully implemented; simple 1/T^2 decay
          return (ag * S * eta * beta * (TC * TD)) / (T * T);
        }
      }

      document.getElementById("computeEc8").addEventListener("click", () => {
        const errEl = document.getElementById("errorMessage");
        errEl.textContent = "";

        const agR = parseFloat(document.getElementById("agR").value);
        const gammaI = parseFloat(document.getElementById("gammaI").value);
        const soil = soilParams[document.getElementById("soilType").value];
        const damping = parseFloat(document.getElementById("damping").value);
        let q = parseFloat(document.getElementById("qUser").value);
        const T1 = parseFloat(document.getElementById("T1").value);

        if (
          isNaN(agR) ||
          agR <= 0 ||
          isNaN(gammaI) ||
          gammaI <= 0 ||
          !soil ||
          isNaN(q) ||
          q < 1 ||
          isNaN(T1) ||
          T1 <= 0
        ) {
          errEl.textContent =
            "Please check seismic input values (a_g,R, γ_I, q, T1).";
          return;
        }

        const ag = agR * gammaI;
        const eta = computeEta(damping);
        const beta = 2.5; // plateau factor for 5% damping

        // Storey data
        const rows = Array.from(
          document.querySelectorAll("#storeyTable tbody tr")
        );
        if (!rows.length) {
          errEl.textContent = "Please define at least one storey.";
          return;
        }

        const storeys = [];
        let Mtot = 0;
        let sumWh = 0;
        for (const row of rows) {
          const hInput = row.children[1].querySelector("input");
          const mInput = row.children[2].querySelector("input");
          const h = parseFloat(hInput.value);
          const m = parseFloat(mInput.value);
          if (isNaN(h) || h <= 0 || isNaN(m) || m <= 0) {
            errEl.textContent =
              "All storey heights and masses must be positive numbers.";
            return;
          }
          const w = m * h;
          storeys.push({ label: row.children[0].textContent.trim(), h, m, w });
          Mtot += m;
          sumWh += w;
        }

        if (Mtot <= 0 || sumWh <= 0) {
          errEl.textContent =
            "Total mass and Σ(m_i h_i) must be greater than zero.";
          return;
        }

        // Spectrum at T1
        const SeT1 = computeElasticSpectrum(
          T1,
          ag,
          soil.S,
          soil.TB,
          soil.TC,
          soil.TD,
          beta,
          eta
        ); // in g
        const SdT1 = SeT1 / q; // in g

        // Base shear in kN: Vb = Sd(T1) * g * Mtot, with Mtot in tonnes
        const g_ms2 = 9.81;
        const Vb = SdT1 * g_ms2 * Mtot; // kN if we treat tonnes * m/s² as kN

        // Distribute forces
        const resultsTbody = document.querySelector("#resultsTable tbody");
        resultsTbody.innerHTML = "";
        let cumulativeAbove = 0;
        // storeys array is top to bottom; for cumulative above, we iterate from bottom
        const bottomToTop = [...storeys].reverse();
        const FiArray = [];
        for (const s of storeys) {
          const Fi = Vb * (s.w / sumWh);
          FiArray.push(Fi);
        }
        // cumulative above for each storey (top storey has 0 above)
        const cumulativeAboveArr = [];
        let running = 0;
        for (let i = 0; i < FiArray.length; i++) {
          const above = FiArray.slice(i + 1).reduce((a, b) => a + b, 0);
          cumulativeAboveArr.push(above);
        }

        storeys.forEach((s, idx) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="text-left">${s.label}</td>
        <td>${s.h.toFixed(2)}</td>
        <td>${s.m.toFixed(1)}</td>
        <td>${s.w.toFixed(1)}</td>
        <td>${FiArray[idx].toFixed(1)}</td>
        <td>${cumulativeAboveArr[idx].toFixed(1)}</td>
      `;
          resultsTbody.appendChild(tr);
        });

        // Spectrum sample points
        const specBody = document.getElementById("spectrumTableBody");
        specBody.innerHTML = "";
        const Ts = [0.0, soil.TB, soil.TC, soil.TD, T1];
        const uniqueTs = Array.from(new Set(Ts)).sort((a, b) => a - b);
        uniqueTs.forEach((T) => {
          const Se = computeElasticSpectrum(
            T,
            ag,
            soil.S,
            soil.TB,
            soil.TC,
            soil.TD,
            beta,
            eta
          );
          const Sd = Se / q;
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="text-left">${T.toFixed(3)}</td>
        <td>${Sd.toFixed(3)}</td>
      `;
          specBody.appendChild(tr);
        });

        // Populate global results
        document.getElementById("res_ag").textContent = ag.toFixed(3);
        document.getElementById("res_S").textContent = soil.S.toFixed(2);
        document.getElementById("res_eta").textContent = eta.toFixed(3);
        document.getElementById("res_q").textContent = q.toFixed(2);
        document.getElementById("res_T1").textContent = T1.toFixed(3);
        document.getElementById("res_SeT1").textContent = SeT1.toFixed(3);
        document.getElementById("res_Mtot").textContent = Mtot.toFixed(1);
        document.getElementById("res_Vb").textContent = Vb.toFixed(1);

        document.getElementById("resultsContainer").classList.remove("hidden");
      });

      document.getElementById("resetEc8").addEventListener("click", () => {
        document.getElementById("agR").value = 0.25;
        document.getElementById("gammaI").value = 1.0;
        document.getElementById("soilType").value = "B";
        document.getElementById("damping").value = 5;
        document.getElementById("systemType").value = "rcFrame";
        document.getElementById("ductilityClass").value = "DCM";
        document.getElementById("qUser").value = suggestQ(
          "rcFrame",
          "DCM"
        ).toFixed(1);
        document.getElementById("T1").value = 0.8;
        document.getElementById("numStoreys").value = 5;
        buildStoreyTableRows(5);
        document.getElementById("resultsContainer").classList.add("hidden");
        document.getElementById("errorMessage").textContent = "";
      });

