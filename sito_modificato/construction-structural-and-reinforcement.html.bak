      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document.querySelectorAll(".tab-btn").forEach((b) => {
            b.classList.remove("bg-blue-600", "text-white");
            b.classList.add("bg-gray-100", "text-gray-700");
          });
          btn.classList.add("bg-blue-600", "text-white");
          btn.classList.remove("bg-gray-100", "text-gray-700");

          document.querySelectorAll(".tab-panel").forEach((panel) => {
            panel.classList.add("hidden");
          });
          document.getElementById("tab-" + target).classList.remove("hidden");
        });
      });

      function toMeters(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v)) return 0;
        if (unit === "m") return v;
        if (unit === "ft") return v * 0.3048;
        if (unit === "mm") return v / 1000;
        if (unit === "in") return v * 0.0254;
        return v;
      }

      function toSquareMeters(value, unit) {
        const v = parseFloat(value);
        if (isNaN(v)) return 0;
        if (unit === "m2") return v;
        if (unit === "ft2") return v * 0.092903;
        return v;
      }

      function formatNumber(v, decimals) {
        return Number(v).toLocaleString(undefined, {
          maximumFractionDigits: decimals,
          minimumFractionDigits: decimals,
        });
      }

      // Slab calculator
      document.getElementById("slab-calc-btn").addEventListener("click", () => {
        const L = toMeters(
          document.getElementById("slab-length").value,
          document.getElementById("slab-length-unit").value
        );
        const W = toMeters(
          document.getElementById("slab-width").value,
          document.getElementById("slab-width-unit").value
        );
        const sMain = toMeters(
          document.getElementById("slab-spacing-main").value,
          document.getElementById("slab-spacing-main-unit").value
        );
        const sDist = toMeters(
          document.getElementById("slab-spacing-dist").value,
          document.getElementById("slab-spacing-dist-unit").value
        );
        const wMain = parseFloat(
          document.getElementById("slab-bar-main").value
        );
        const wDist = parseFloat(
          document.getElementById("slab-bar-dist").value
        );

        if (L <= 0 || W <= 0 || sMain <= 0 || sDist <= 0) {
          alert("Please enter positive dimensions and spacings for the slab.");
          return;
        }

        const nMain = Math.floor(W / sMain) + 1;
        const nDist = Math.floor(L / sDist) + 1;

        const LmainTot = nMain * L;
        const LdistTot = nDist * W;

        const Wmain = LmainTot * wMain;
        const Wdist = LdistTot * wDist;

        document.getElementById(
          "slab-main-count"
        ).textContent = `Bars: ${nMain}`;
        document.getElementById(
          "slab-main-length"
        ).textContent = `Total length: ${formatNumber(LmainTot, 2)} m`;
        document.getElementById(
          "slab-main-weight"
        ).textContent = `Approx. weight: ${formatNumber(Wmain, 1)} kg`;

        document.getElementById(
          "slab-dist-count"
        ).textContent = `Bars: ${nDist}`;
        document.getElementById(
          "slab-dist-length"
        ).textContent = `Total length: ${formatNumber(LdistTot, 2)} m`;
        document.getElementById(
          "slab-dist-weight"
        ).textContent = `Approx. weight: ${formatNumber(Wdist, 1)} kg`;

        document.getElementById("slab-results").classList.remove("hidden");
      });

      document
        .getElementById("slab-reset-btn")
        .addEventListener("click", () => {
          [
            "slab-length",
            "slab-width",
            "slab-spacing-main",
            "slab-spacing-dist",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("slab-results").classList.add("hidden");
        });

      // Beam calculator
      document.getElementById("beam-calc-btn").addEventListener("click", () => {
        const L = toMeters(
          document.getElementById("beam-length").value,
          document.getElementById("beam-length-unit").value
        );
        const nBot = parseInt(
          document.getElementById("beam-bars-bottom").value || "0",
          10
        );
        const nTop = parseInt(
          document.getElementById("beam-bars-top").value || "0",
          10
        );
        const wLong = parseFloat(
          document.getElementById("beam-bar-size").value
        );

        const sSt = toMeters(
          document.getElementById("stirrup-spacing").value,
          document.getElementById("stirrup-spacing-unit").value
        );
        const perSt = toMeters(
          document.getElementById("stirrup-perimeter").value,
          document.getElementById("stirrup-perimeter-unit").value
        );
        const wSt = parseFloat(
          document.getElementById("stirrup-bar-size").value
        );

        if (L <= 0 || sSt <= 0 || perSt <= 0) {
          alert(
            "Please enter positive beam length, stirrup spacing, and stirrup perimeter."
          );
          return;
        }

        const nLong = nBot + nTop;
        const LlongTot = nLong * L;
        const Wlong = LlongTot * wLong;

        const nSt = Math.floor(L / sSt) + 1;
        const LstTot = nSt * perSt;
        const Wst = LstTot * wSt;

        document.getElementById(
          "beam-long-count"
        ).textContent = `Longitudinal bars: ${nLong} (bottom: ${nBot}, top: ${nTop})`;
        document.getElementById(
          "beam-long-length"
        ).textContent = `Total length: ${formatNumber(LlongTot, 2)} m`;
        document.getElementById(
          "beam-long-weight"
        ).textContent = `Approx. weight: ${formatNumber(Wlong, 1)} kg`;

        document.getElementById(
          "beam-stirrup-count"
        ).textContent = `Stirrups: ${nSt}`;
        document.getElementById(
          "beam-stirrup-length"
        ).textContent = `Total length: ${formatNumber(LstTot, 2)} m`;
        document.getElementById(
          "beam-stirrup-weight"
        ).textContent = `Approx. weight: ${formatNumber(Wst, 1)} kg`;

        document.getElementById("beam-results").classList.remove("hidden");
      });

      document
        .getElementById("beam-reset-btn")
        .addEventListener("click", () => {
          [
            "beam-length",
            "beam-bars-bottom",
            "beam-bars-top",
            "stirrup-spacing",
            "stirrup-perimeter",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("beam-results").classList.add("hidden");
        });

      // Footing calculator
      document
        .getElementById("footing-calc-btn")
        .addEventListener("click", () => {
          const L = toMeters(
            document.getElementById("footing-length").value,
            document.getElementById("footing-length-unit").value
          );
          const W = toMeters(
            document.getElementById("footing-width").value,
            document.getElementById("footing-width-unit").value
          );
          const sX = toMeters(
            document.getElementById("footing-spacing-x").value,
            document.getElementById("footing-spacing-x-unit").value
          );
          const sY = toMeters(
            document.getElementById("footing-spacing-y").value,
            document.getElementById("footing-spacing-y-unit").value
          );
          const wBar = parseFloat(
            document.getElementById("footing-bar-size").value
          );

          if (L <= 0 || W <= 0 || sX <= 0 || sY <= 0) {
            alert("Please enter positive footing dimensions and spacings.");
            return;
          }

          const nX = Math.floor(W / sX) + 1;
          const nY = Math.floor(L / sY) + 1;

          const LxTot = nX * L;
          const LyTot = nY * W;

          const Wx = LxTot * wBar;
          const Wy = LyTot * wBar;

          document.getElementById(
            "footing-x-count"
          ).textContent = `Bars in X: ${nX}`;
          document.getElementById(
            "footing-x-length"
          ).textContent = `Total length: ${formatNumber(LxTot, 2)} m`;
          document.getElementById(
            "footing-x-weight"
          ).textContent = `Approx. weight: ${formatNumber(Wx, 1)} kg`;

          document.getElementById(
            "footing-y-count"
          ).textContent = `Bars in Y: ${nY}`;
          document.getElementById(
            "footing-y-length"
          ).textContent = `Total length: ${formatNumber(LyTot, 2)} m`;
          document.getElementById(
            "footing-y-weight"
          ).textContent = `Approx. weight: ${formatNumber(Wy, 1)} kg`;

          document.getElementById("footing-results").classList.remove("hidden");
        });

      document
        .getElementById("footing-reset-btn")
        .addEventListener("click", () => {
          [
            "footing-length",
            "footing-width",
            "footing-spacing-x",
            "footing-spacing-y",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("footing-results").classList.add("hidden");
        });

      // Mesh / fiber calculator
      document.getElementById("mesh-calc-btn").addEventListener("click", () => {
        const A = toSquareMeters(
          document.getElementById("mesh-area").value,
          document.getElementById("mesh-area-unit").value
        );
        const Asheet = toSquareMeters(
          document.getElementById("mesh-sheet-area").value,
          document.getElementById("mesh-sheet-area-unit").value
        );
        const dose = parseFloat(document.getElementById("fiber-dose").value);
        const doseUnit = document.getElementById("fiber-dose-unit").value;
        const t = toMeters(
          document.getElementById("slab-thickness").value,
          document.getElementById("slab-thickness-unit").value
        );

        if (A <= 0 || Asheet <= 0 || t <= 0 || isNaN(dose) || dose <= 0) {
          alert(
            "Please enter positive area, sheet size, slab thickness, and fiber dosage."
          );
          return;
        }

        const nSheets = Math.ceil(A / Asheet);

        // Concrete volume
        const V = A * t; // m³

        let massKg;
        if (doseUnit === "kg_m3") {
          massKg = V * dose;
        } else {
          // lb/yd³ to kg: 1 lb/yd³ ≈ 0.593276 kg/m³
          const doseKgPerM3 = dose * 0.593276;
          massKg = V * doseKgPerM3;
        }

        document.getElementById(
          "mesh-sheet-count"
        ).textContent = `Approx. mesh sheets: ${nSheets} (ignoring overlap and waste)`;
        document.getElementById(
          "fiber-volume"
        ).textContent = `Concrete volume: ${formatNumber(V, 2)} m³`;
        document.getElementById(
          "fiber-mass"
        ).textContent = `Fiber required: ${formatNumber(
          massKg,
          1
        )} kg (approx.)`;

        document.getElementById("mesh-results").classList.remove("hidden");
      });

      document
        .getElementById("mesh-reset-btn")
        .addEventListener("click", () => {
          [
            "mesh-area",
            "mesh-sheet-area",
            "fiber-dose",
            "slab-thickness",
          ].forEach((id) => {
            document.getElementById(id).value = "";
          });
          document.getElementById("mesh-results").classList.add("hidden");
        });

      // Mobile menu script safeguard (if not in external file)
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          mobileMenu.classList.toggle("hidden");
        });
      }

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
