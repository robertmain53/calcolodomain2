    <script>
      (function () {
        const PHI = (1 + Math.sqrt(5)) / 2;
        const PHI_APPROX = 1.61803398875;

        // Tab handling
        const tabs = {
          length: document.getElementById("tab-length"),
          rectangle: document.getElementById("tab-rectangle"),
          ratio: document.getElementById("tab-ratio"),
        };
        const panels = {
          length: document.getElementById("panel-length"),
          rectangle: document.getElementById("panel-rectangle"),
          ratio: document.getElementById("panel-ratio"),
        };

        function activateTab(name) {
          Object.keys(tabs).forEach((key) => {
            if (key === name) {
              tabs[key].classList.add("tab-active");
              tabs[key].setAttribute("aria-selected", "true");
              panels[key].classList.remove("hidden");
            } else {
              tabs[key].classList.remove("tab-active");
              tabs[key].setAttribute("aria-selected", "false");
              panels[key].classList.add("hidden");
            }
          });
        }

        tabs.length.addEventListener("click", () => activateTab("length"));
        tabs.rectangle.addEventListener("click", () =>
          activateTab("rectangle")
        );
        tabs.ratio.addEventListener("click", () => activateTab("ratio"));

        // Helper: format number nicely
        function formatNumber(value) {
          if (!isFinite(value)) return "—";
          const abs = Math.abs(value);
          if (abs === 0) return "0";
          if (abs >= 10000 || abs < 0.001) {
            return value.toExponential(4);
          }
          return value.toFixed(4).replace(/\.?0+$/, "");
        }

        // 1) Split a length
        const totalInput = document.getElementById("total-length");
        const unitInput = document.getElementById("total-unit");
        const btnLength = document.getElementById("btn-length");
        const lengthError = document.getElementById("length-error");
        const lengthResults = document.getElementById("length-results");
        const lengthLong = document.getElementById("length-long");
        const lengthShort = document.getElementById("length-short");
        const lengthRatio = document.getElementById("length-ratio");
        const phiBar = document.getElementById("phi-bar");

        btnLength.addEventListener("click", () => {
          lengthError.classList.add("hidden");
          lengthResults.classList.add("hidden");

          const L = parseFloat(totalInput.value);
          if (!isFinite(L) || L <= 0) {
            lengthError.textContent = "Please enter a positive total length.";
            lengthError.classList.remove("hidden");
            return;
          }
          const unit = unitInput.value.trim();
          const a = (PHI / (1 + PHI)) * L;
          const b = L - a;
          const ratio = a / b;

          const suffix = unit ? " " + unit : "";
          lengthLong.textContent = `${formatNumber(a)}${suffix}`;
          lengthShort.textContent = `${formatNumber(b)}${suffix}`;
          lengthRatio.textContent = `${formatNumber(
            ratio
          )} (φ ≈ ${PHI_APPROX.toFixed(4)})`;
          lengthResults.classList.remove("hidden");

          // Update visual bar: longer segment as % of total, capped for aesthetics
          const percent = Math.max(10, Math.min(90, (a / L) * 100));
          phiBar.style.width = percent + "%";
        });

        // 2) Golden rectangle
        const rectValue = document.getElementById("rect-value");
        const rectUnit = document.getElementById("rect-unit");
        const btnRectangle = document.getElementById("btn-rectangle");
        const rectError = document.getElementById("rect-error");
        const rectResults = document.getElementById("rect-results");
        const rectWidth = document.getElementById("rect-width");
        const rectHeight = document.getElementById("rect-height");
        const rectAspect = document.getElementById("rect-aspect");
        const rectVisual = document.getElementById("rect-visual");

        function getRectKnown() {
          const radios = document.querySelectorAll('input[name="rect-known"]');
          for (const r of radios) if (r.checked) return r.value;
          return "width";
        }

        btnRectangle.addEventListener("click", () => {
          rectError.classList.add("hidden");
          rectResults.classList.add("hidden");

          const val = parseFloat(rectValue.value);
          if (!isFinite(val) || val <= 0) {
            rectError.textContent =
              "Please enter a positive value for the known side.";
            rectError.classList.remove("hidden");
            return;
          }
          const unit = rectUnit.value.trim();
          const known = getRectKnown();

          let w, h;
          if (known === "width") {
            w = val;
            h = val / PHI;
          } else {
            h = val;
            w = val * PHI;
          }

          const suffix = unit ? " " + unit : "";
          rectWidth.textContent = `${formatNumber(w)}${suffix}`;
          rectHeight.textContent = `${formatNumber(h)}${suffix}`;
          rectAspect.textContent = `${formatNumber(
            w / h
          )} : 1 (φ ≈ ${PHI_APPROX.toFixed(4)})`;
          rectResults.classList.remove("hidden");

          // Update visual aspect ratio by adjusting width/height ratio
          const container = rectVisual.parentElement;
          const maxW = container.clientWidth * 0.9;
          const maxH = container.clientHeight * 0.7;
          let visW = maxW;
          let visH = visW / (w / h);
          if (visH > maxH) {
            visH = maxH;
            visW = visH * (w / h);
          }
          rectVisual.style.width = visW + "px";
          rectVisual.style.height = visH + "px";
        });

        // 3) Check a ratio
        const ratioA = document.getElementById("ratio-a");
        const ratioB = document.getElementById("ratio-b");
        const btnRatio = document.getElementById("btn-ratio");
        const ratioError = document.getElementById("ratio-error");
        const ratioResults = document.getElementById("ratio-results");
        const ratioValue = document.getElementById("ratio-value");
        const ratioDiff = document.getElementById("ratio-diff");
        const ratioVerdict = document.getElementById("ratio-verdict");

        btnRatio.addEventListener("click", () => {
          ratioError.classList.add("hidden");
          ratioResults.classList.add("hidden");

          let a = parseFloat(ratioA.value);
          let b = parseFloat(ratioB.value);
          if (!isFinite(a) || !isFinite(b) || a <= 0 || b <= 0) {
            ratioError.textContent = "Please enter two positive values.";
            ratioError.classList.remove("hidden");
            return;
          }
          // Ensure a is the larger
          if (b > a) {
            const tmp = a;
            a = b;
            b = tmp;
          }
          const r = a / b;
          const diff = (Math.abs(r - PHI) / PHI) * 100;

          ratioValue.textContent = `${formatNumber(r)}`;
          ratioDiff.textContent = `${diff.toFixed(2)}% from φ`;

          let verdict;
          if (diff < 1) verdict = "Very close to the golden ratio.";
          else if (diff < 5) verdict = "Close to the golden ratio.";
          else verdict = "Not particularly close to the golden ratio.";
          ratioVerdict.textContent = verdict;

          ratioResults.classList.remove("hidden");
        });
      })();
    </script>

