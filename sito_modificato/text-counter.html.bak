    <script>
      // Debounce utility
      function debounce(fn, delay) {
        let t;
        return function (...args) {
          clearTimeout(t);
          t = setTimeout(() => fn.apply(this, args), delay);
        };
      }

      function computeStats(text, wpm) {
        const result = {
          words: 0,
          chars: text.length,
          charsNoSpace: 0,
          sentences: 0,
          paragraphs: 0,
          lines: 0,
          avgWordLen: 0,
          readingSeconds: 0,
        };

        if (!text) return result;

        // Normalize line endings
        const normalized = text.replace(/\r\n/g, "\n");

        // Characters without spaces (remove spaces, tabs, newlines)
        result.charsNoSpace = normalized.replace(/[\s]/g, "").length;

        // Lines
        result.lines = normalized.split("\n").length;

        // Paragraphs: split on two or more newlines
        const paraTokens = normalized
          .split(/\n{2,}/)
          .filter((p) => p.trim().length > 0);
        result.paragraphs = paraTokens.length;

        // Words
        const wordTokens = normalized
          .trim()
          .split(/\s+/)
          .filter((t) => t.length > 0);
        result.words = wordTokens.length;

        // Sentences: heuristic based on punctuation
        const sentenceTokens = normalized
          .replace(/[\r\n]+/g, " ")
          .split(/(?<=[.!?])\s+/)
          .filter((s) => s.trim().length > 0);
        result.sentences = sentenceTokens.length;

        // Average word length
        if (result.words > 0) {
          result.avgWordLen = result.charsNoSpace / result.words;
        }

        // Reading time in seconds
        if (wpm > 0) {
          result.readingSeconds = Math.round((result.words / wpm) * 60);
        }

        return result;
      }

      function formatReadingTime(seconds) {
        if (!seconds || seconds <= 0) return "0 sec";
        const mins = Math.floor(seconds / 60);
        const secs = seconds % 60;
        if (mins === 0) return secs + " sec";
        if (secs === 0) return mins + " min";
        return mins + " min " + secs + " sec";
      }

      document.addEventListener("DOMContentLoaded", () => {
        const textarea = document.getElementById("text-input");
        const readingSpeedSelect = document.getElementById("reading-speed");
        const liveToggle = document.getElementById("live-toggle");

        const statWords = document.getElementById("stat-words");
        const statChars = document.getElementById("stat-chars");
        const statCharsNoSpace = document.getElementById("stat-chars-nospace");
        const statSentences = document.getElementById("stat-sentences");
        const statParagraphs = document.getElementById("stat-paragraphs");
        const statLines = document.getElementById("stat-lines");
        const statAvgWord = document.getElementById("stat-avg-word");
        const statReading = document.getElementById("stat-reading");

        const btnClear = document.getElementById("btn-clear");
        const btnPaste = document.getElementById("btn-paste");
        const btnCopy = document.getElementById("btn-copy");

        const selectionPanel = document.getElementById("selection-panel");
        const selectionInfo = document.getElementById("selection-info");
        const selWords = document.getElementById("sel-words");
        const selChars = document.getElementById("sel-chars");
        const selSentences = document.getElementById("sel-sentences");
        const selReading = document.getElementById("sel-reading");

        function updateMainStats() {
          const wpm = parseInt(readingSpeedSelect.value, 10) || 200;
          const text = textarea.value || "";
          const stats = computeStats(text, wpm);

          statWords.textContent = stats.words.toLocaleString();
          statChars.textContent = stats.chars.toLocaleString();
          statCharsNoSpace.textContent = stats.charsNoSpace.toLocaleString();
          statSentences.textContent = stats.sentences.toLocaleString();
          statParagraphs.textContent = stats.paragraphs.toLocaleString();
          statLines.textContent = stats.lines.toLocaleString();
          statAvgWord.textContent = stats.avgWordLen
            ? stats.avgWordLen.toFixed(2)
            : "0";
          statReading.textContent = formatReadingTime(stats.readingSeconds);
        }

        const debouncedUpdate = debounce(updateMainStats, 120);

        function handleInput() {
          if (liveToggle.checked) {
            debouncedUpdate();
          }
        }

        textarea.addEventListener("input", handleInput);
        readingSpeedSelect.addEventListener("change", updateMainStats);
        liveToggle.addEventListener("change", () => {
          if (liveToggle.checked) {
            updateMainStats();
          }
        });

        btnClear.addEventListener("click", () => {
          textarea.value = "";
          updateMainStats();
          selectionPanel.classList.add("hidden");
          selectionInfo.classList.add("hidden");
        });

        btnPaste.addEventListener("click", async () => {
          if (!navigator.clipboard || !navigator.clipboard.readText) {
            alert("Clipboard API not available in this browser.");
            return;
          }
          try {
            const text = await navigator.clipboard.readText();
            if (text) {
              textarea.value = text;
              updateMainStats();
            }
          } catch (err) {
            console.error(err);
            alert(
              "Unable to read from clipboard. Please paste manually (Ctrl+V / Cmd+V)."
            );
          }
        });

        btnCopy.addEventListener("click", async () => {
          const text = textarea.value || "";
          if (!navigator.clipboard || !navigator.clipboard.writeText) {
            textarea.select();
            try {
              document.execCommand("copy");
              alert("Text copied to clipboard.");
            } catch (e) {
              alert("Unable to copy automatically. Please use Ctrl+C / Cmd+C.");
            }
            return;
          }
          try {
            await navigator.clipboard.writeText(text);
            btnCopy.textContent = "Copied!";
            setTimeout(() => {
              btnCopy.textContent = "Copy text";
            }, 1200);
          } catch (err) {
            console.error(err);
            alert("Unable to copy to clipboard. Please use Ctrl+C / Cmd+C.");
          }
        });

        // Selection statistics
        function updateSelectionStats() {
          const text = textarea.value || "";
          const start = textarea.selectionStart;
          const end = textarea.selectionEnd;
          if (start === end) {
            selectionPanel.classList.add("hidden");
            selectionInfo.classList.add("hidden");
            return;
          }
          const selected = text.slice(start, end);
          const wpm = parseInt(readingSpeedSelect.value, 10) || 200;
          const stats = computeStats(selected, wpm);

          selWords.textContent = stats.words.toLocaleString();
          selChars.textContent = stats.chars.toLocaleString();
          selSentences.textContent = stats.sentences.toLocaleString();
          selReading.textContent = formatReadingTime(stats.readingSeconds);

          selectionPanel.classList.remove("hidden");
          selectionInfo.classList.remove("hidden");
          selectionInfo.textContent = `Selection: ${stats.words.toLocaleString()} words, ${stats.chars.toLocaleString()} chars`;
        }

        textarea.addEventListener("mouseup", () => {
          setTimeout(updateSelectionStats, 0);
        });
        textarea.addEventListener("keyup", (e) => {
          if (
            e.key === "Shift" ||
            e.key === "ArrowLeft" ||
            e.key === "ArrowRight" ||
            e.key === "ArrowUp" ||
            e.key === "ArrowDown"
          ) {
            setTimeout(updateSelectionStats, 0);
          }
        });

        // Initial stats
        updateMainStats();
      });
    </script>

