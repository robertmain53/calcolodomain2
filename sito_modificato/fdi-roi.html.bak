    <script>
      // Utility: format currency and percentage
      function formatCurrency(value, currencyLabel) {
        if (!isFinite(value)) return "–";
        const absVal = Math.abs(value);
        let formatted = absVal.toLocaleString(undefined, {
          maximumFractionDigits: 2,
        });
        if (value < 0) formatted = "-" + formatted;
        return (currencyLabel || "") + (currencyLabel ? " " : "") + formatted;
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "–";
        return (value * 100).toFixed(2) + "%";
      }

      function generateCashFlowRows() {
        const yearsInput = document.getElementById("years");
        const tbody = document.getElementById("cashFlowTableBody");
        const cashFlowSection = document.getElementById("cashFlowSection");
        const years = parseInt(yearsInput.value, 10);

        if (!Number.isFinite(years) || years < 1 || years > 40) {
          alert("Please enter a number of years between 1 and 40.");
          return;
        }

        tbody.innerHTML = "";
        for (let y = 1; y <= years; y++) {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 border-b text-left">Year ${y}</td>
        <td class="px-3 py-2 border-b text-right">
          <input type="number" step="0.01" class="w-32 md:w-40 border border-gray-300 rounded-md px-2 py-1 text-right" data-year="${y}" />
        </td>
      `;
          tbody.appendChild(tr);
        }
        cashFlowSection.classList.remove("hidden");
      }

      function calculateFdiRoi() {
        const currencyLabel = document.getElementById("currency").value.trim();
        const initialInvestment = parseFloat(
          document.getElementById("initialInvestment").value
        );
        const followOnInvestment =
          parseFloat(document.getElementById("followOnInvestment").value) || 0;
        const years = parseInt(document.getElementById("years").value, 10);
        const discountRate =
          parseFloat(document.getElementById("discountRate").value) / 100;
        const exitValue =
          parseFloat(document.getElementById("exitValue").value) || 0;
        const errorMsg = document.getElementById("errorMsg");

        errorMsg.textContent = "";

        if (!isFinite(initialInvestment) || initialInvestment <= 0) {
          errorMsg.textContent = "Please enter a positive initial investment.";
          return;
        }
        if (!Number.isFinite(years) || years < 1) {
          errorMsg.textContent =
            "Please generate at least 1 year of cash flows.";
          return;
        }

        const cashInputs = document.querySelectorAll(
          "#cashFlowTableBody input[data-year]"
        );
        if (cashInputs.length === 0) {
          errorMsg.textContent =
            'Click "Generate cash flow table" and enter yearly cash flows.';
          return;
        }

        const cashFlows = [];
        // Year 0 cash flow: initial investment as outflow
        cashFlows.push(-initialInvestment);

        let totalCashReturned = 0;
        for (let i = 0; i < cashInputs.length; i++) {
          const val = parseFloat(cashInputs[i].value) || 0;
          cashFlows.push(val);
          totalCashReturned += val;
        }
        // Add exit value to final year
        cashFlows[cashFlows.length - 1] += exitValue;
        totalCashReturned += exitValue;

        const totalInvested = initialInvestment + (followOnInvestment || 0);
        const profit = totalCashReturned - totalInvested;
        const simpleRoi = profit / totalInvested;

        // Annualized ROI (CAGR) based on total horizon
        const horizonYears = years;
        let annualizedRoi = NaN;
        if (totalInvested > 0 && totalCashReturned > 0 && horizonYears > 0) {
          annualizedRoi =
            Math.pow(totalCashReturned / totalInvested, 1 / horizonYears) - 1;
        }

        // NPV using discount rate
        let npv = 0;
        for (let t = 0; t < cashFlows.length; t++) {
          npv += cashFlows[t] / Math.pow(1 + discountRate, t);
        }

        // IRR via Newton-Raphson
        function computeIrr(cfs, guess = 0.1) {
          let rate = guess;
          for (let i = 0; i < 100; i++) {
            let npvVal = 0;
            let dNpv = 0;
            for (let t = 0; t < cfs.length; t++) {
              const denom = Math.pow(1 + rate, t);
              npvVal += cfs[t] / denom;
              if (t > 0) {
                dNpv -= (t * cfs[t]) / Math.pow(1 + rate, t + 1);
              }
            }
            if (Math.abs(dNpv) < 1e-10) break;
            const newRate = rate - npvVal / dNpv;
            if (!isFinite(newRate)) break;
            if (Math.abs(newRate - rate) < 1e-7) {
              rate = newRate;
              break;
            }
            rate = newRate;
          }
          return rate;
        }

        let irr = NaN;
        try {
          irr = computeIrr(cashFlows);
          if (!isFinite(irr) || irr < -0.9999) irr = NaN;
        } catch (e) {
          irr = NaN;
        }

        // Update result cards
        document.getElementById("totalInvestedDisplay").textContent =
          formatCurrency(totalInvested, currencyLabel);
        document.getElementById("totalReturnedDisplay").textContent =
          formatCurrency(totalCashReturned, currencyLabel);
        document.getElementById("simpleRoiDisplay").textContent =
          formatPercent(simpleRoi);
        document.getElementById("annualizedRoiDisplay").textContent = isNaN(
          annualizedRoi
        )
          ? "–"
          : formatPercent(annualizedRoi);
        document.getElementById("npvDisplay").textContent = formatCurrency(
          npv,
          currencyLabel
        );
        document.getElementById("irrDisplay").textContent = isNaN(irr)
          ? "–"
          : formatPercent(irr);

        // Build cash flow summary table
        const summaryBody = document.getElementById("cashFlowSummaryBody");
        const summarySection = document.getElementById("cashFlowSummary");
        summaryBody.innerHTML = "";
        for (let t = 0; t < cashFlows.length; t++) {
          const cf = cashFlows[t];
          const disc = cf / Math.pow(1 + discountRate, t);
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 border-b text-left">${t}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          cf,
          currencyLabel
        )}</td>
        <td class="px-2 py-1 border-b text-right">${formatCurrency(
          disc,
          currencyLabel
        )}</td>
      `;
          summaryBody.appendChild(tr);
        }
        summarySection.classList.remove("hidden");
      }

      function resetCalculator() {
        document.getElementById("currency").value = "USD";
        document.getElementById("discountRate").value = 10;
        document.getElementById("initialInvestment").value = 1000000;
        document.getElementById("followOnInvestment").value = 0;
        document.getElementById("years").value = 5;
        document.getElementById("cashFlowTableBody").innerHTML = "";
        document.getElementById("cashFlowSection").classList.add("hidden");
        document.getElementById("exitValue").value = 0;
        document.getElementById("errorMsg").textContent = "";
        document.getElementById("totalInvestedDisplay").textContent = "–";
        document.getElementById("totalReturnedDisplay").textContent = "–";
        document.getElementById("simpleRoiDisplay").textContent = "–";
        document.getElementById("annualizedRoiDisplay").textContent = "–";
        document.getElementById("npvDisplay").textContent = "–";
        document.getElementById("irrDisplay").textContent = "–";
        document.getElementById("cashFlowSummaryBody").innerHTML = "";
        document.getElementById("cashFlowSummary").classList.add("hidden");
      }

      document
        .getElementById("generateYearsBtn")
        .addEventListener("click", generateCashFlowRows);
      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateFdiRoi);
      document
        .getElementById("resetBtn")
        .addEventListener("click", resetCalculator);

      // Initialize default table on load
      window.addEventListener("DOMContentLoaded", () => {
        generateCashFlowRows();
      });

      // Mobile menu script (simple toggle)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });
    </script>

