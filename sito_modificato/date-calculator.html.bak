      // Utility: parse date input safely
      function getDateFromInput(id) {
        const val = document.getElementById(id).value;
        if (!val) return null;
        const parts = val.split("-").map(Number);
        if (parts.length !== 3) return null;
        const d = new Date(parts[0], parts[1] - 1, parts[2]);
        if (isNaN(d.getTime())) return null;
        return d;
      }

      function formatDateLong(d) {
        return d.toLocaleDateString(undefined, {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
        });
      }

      function clampDay(year, monthIndex, day) {
        const lastDay = new Date(year, monthIndex + 1, 0).getDate();
        return Math.min(day, lastDay);
      }

      // Add/Subtract
      function calculateAddSubtract() {
        const base = getDateFromInput("add-base-date");
        if (!base) {
          alert("Please select a valid start date.");
          return;
        }

        const op = document.querySelector(
          'input[name="add-operation"]:checked'
        ).value;
        const sign = op === "add" ? 1 : -1;
        const countType = document.getElementById("add-count-type").value;

        const years = parseInt(
          document.getElementById("add-years").value || "0",
          10
        );
        const months = parseInt(
          document.getElementById("add-months").value || "0",
          10
        );
        const weeks = parseInt(
          document.getElementById("add-weeks").value || "0",
          10
        );
        const days = parseInt(
          document.getElementById("add-days").value || "0",
          10
        );

        let result = new Date(base.getTime());

        // Years and months (calendar-based)
        if (years !== 0 || months !== 0) {
          const totalMonths = result.getMonth() + sign * (years * 12 + months);
          const targetYear =
            result.getFullYear() + Math.floor(totalMonths / 12);
          const targetMonth = ((totalMonths % 12) + 12) % 12;
          const targetDay = clampDay(targetYear, targetMonth, result.getDate());
          result = new Date(targetYear, targetMonth, targetDay);
        }

        const totalDays = weeks * 7 + days;

        if (countType === "calendar") {
          if (totalDays !== 0) {
            result.setDate(result.getDate() + sign * totalDays);
          }
        } else {
          // business days only
          let remaining = totalDays;
          let current = new Date(result.getTime());
          const step = sign >= 0 ? 1 : -1;
          while (remaining > 0) {
            current.setDate(current.getDate() + step);
            const dayOfWeek = current.getDay();
            if (dayOfWeek !== 0 && dayOfWeek !== 6) {
              remaining--;
            }
          }
          result = current;
        }

        const resBox = document.getElementById("add-result");
        document.getElementById("add-result-main").textContent =
          formatDateLong(result);
        document.getElementById("add-result-details").textContent =
          "ISO date: " + result.toISOString().slice(0, 10);
        resBox.classList.remove("hidden");
      }

      // Days between
      function calculateBetween() {
        const start = getDateFromInput("between-start");
        const end = getDateFromInput("between-end");
        if (!start || !end) {
          alert("Please select both start and end dates.");
          return;
        }

        let s = new Date(
          start.getFullYear(),
          start.getMonth(),
          start.getDate()
        );
        let e = new Date(end.getFullYear(), end.getMonth(), end.getDate());

        const includeEnd =
          document.getElementById("between-include-end").value === "yes";
        const countType = document.getElementById("between-count-type").value;

        if (e < s) {
          const tmp = s;
          s = e;
          e = tmp;
        }

        const msPerDay = 24 * 60 * 60 * 1000;
        let diffDays = Math.round((e - s) / msPerDay);
        if (includeEnd) diffDays += 1;

        let weekdays = 0;
        let weekends = 0;

        // Count weekdays/weekends
        let cur = new Date(s.getTime());
        const steps = includeEnd ? diffDays : diffDays;
        for (let i = 0; i < steps; i++) {
          const dow = cur.getDay();
          if (dow === 0 || dow === 6) weekends++;
          else weekdays++;
          cur.setDate(cur.getDate() + 1);
        }

        // Approximate Y/M/D using calendar logic
        const ymd = diffToYMD(s, e, includeEnd);

        document.getElementById("between-total-days").textContent =
          diffDays + " day" + (diffDays === 1 ? "" : "s");
        document.getElementById("between-weekdays").textContent =
          weekdays + " day" + (weekdays === 1 ? "" : "s");
        document.getElementById("between-weekends").textContent =
          weekends + " day" + (weekends === 1 ? "" : "s");
        document.getElementById("between-ymd").textContent =
          ymd.y +
          " year" +
          (ymd.y === 1 ? "" : "s") +
          ", " +
          ymd.m +
          " month" +
          (ymd.m === 1 ? "" : "s") +
          ", " +
          ymd.d +
          " day" +
          (ymd.d === 1 ? "" : "s");

        document.getElementById("between-result").classList.remove("hidden");
      }

      function diffToYMD(start, end, includeEnd) {
        let s = new Date(
          start.getFullYear(),
          start.getMonth(),
          start.getDate()
        );
        let e = new Date(end.getFullYear(), end.getMonth(), end.getDate());
        if (includeEnd) {
          e.setDate(e.getDate() + 1);
        }
        if (e < s) {
          const tmp = s;
          s = e;
          e = tmp;
        }

        let years = e.getFullYear() - s.getFullYear();
        let months = e.getMonth() - s.getMonth();
        let days = e.getDate() - s.getDate();

        if (days < 0) {
          months -= 1;
          const prevMonth = (e.getMonth() - 1 + 12) % 12;
          const prevYear =
            prevMonth === 11 ? e.getFullYear() - 1 : e.getFullYear();
          const daysInPrevMonth = new Date(
            prevYear,
            prevMonth + 1,
            0
          ).getDate();
          days += daysInPrevMonth;
        }
        if (months < 0) {
          years -= 1;
          months += 12;
        }
        return { y: years, m: months, d: days };
      }

      // Age calculator
      function calculateAge() {
        const birth = getDateFromInput("age-birth");
        if (!birth) {
          alert("Please enter a valid date of birth.");
          return;
        }
        let ref = getDateFromInput("age-ref");
        if (!ref) {
          const today = new Date();
          ref = new Date(
            today.getFullYear(),
            today.getMonth(),
            today.getDate()
          );
        } else {
          ref = new Date(ref.getFullYear(), ref.getMonth(), ref.getDate());
        }

        if (ref < birth) {
          alert("Reference date must be on or after the date of birth.");
          return;
        }

        const ymd = diffToYMD(birth, ref, false);

        const msPerDay = 24 * 60 * 60 * 1000;
        const totalDays = Math.round(
          (ref -
            new Date(birth.getFullYear(), birth.getMonth(), birth.getDate())) /
            msPerDay
        );
        const approxMonths = ymd.y * 12 + ymd.m + ymd.d / 30;

        document.getElementById("age-main").textContent =
          ymd.y +
          " year" +
          (ymd.y === 1 ? "" : "s") +
          ", " +
          ymd.m +
          " month" +
          (ymd.m === 1 ? "" : "s") +
          ", " +
          ymd.d +
          " day" +
          (ymd.d === 1 ? "" : "s");
        document.getElementById("age-days").textContent =
          totalDays.toLocaleString();
        document.getElementById("age-months").textContent =
          approxMonths.toFixed(1);

        document.getElementById("age-result").classList.remove("hidden");
      }

      // Prefill today where helpful
      window.addEventListener("DOMContentLoaded", () => {
        const today = new Date();
        const isoToday = today.toISOString().slice(0, 10);
        const addBase = document.getElementById("add-base-date");
        if (addBase && !addBase.value) addBase.value = isoToday;
        const betweenStart = document.getElementById("between-start");
        const betweenEnd = document.getElementById("between-end");
        if (betweenStart && !betweenStart.value) betweenStart.value = isoToday;
        if (betweenEnd && !betweenEnd.value) betweenEnd.value = isoToday;
        const ageRef = document.getElementById("age-ref");
        if (ageRef && !ageRef.value) ageRef.value = isoToday;
      });

