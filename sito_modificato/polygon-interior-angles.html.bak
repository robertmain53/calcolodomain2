    <script>
      // Polygon interior angles calculator logic
      function formatAngle(value) {
        if (!isFinite(value)) return "—";
        // Show integers without decimals, others to 2 decimal places
        return Number.isInteger(value)
          ? value.toString() + "°"
          : value.toFixed(2) + "°";
      }

      function updateCalculator() {
        const nInput = document.getElementById("sides-input");
        const regularCheckbox = document.getElementById("regular-checkbox");
        const errorMsg = document.getElementById("error-msg");

        const sumEl = document.getElementById("sum-angles");
        const sumFormulaEl = document.getElementById("sum-angles-formula");
        const eachIntEl = document.getElementById("each-interior");
        const eachIntFormulaEl = document.getElementById(
          "each-interior-formula"
        );
        const eachExtEl = document.getElementById("each-exterior");
        const eachExtFormulaEl = document.getElementById(
          "each-exterior-formula"
        );
        const checkSumEl = document.getElementById("check-sum");

        let n = parseInt(nInput.value, 10);

        if (isNaN(n) || n < 3) {
          errorMsg.textContent =
            "Please enter an integer number of sides n ≥ 3.";
          errorMsg.classList.remove("hidden");
          sumEl.textContent = "—";
          eachIntEl.textContent = "—";
          eachExtEl.textContent = "—";
          sumFormulaEl.textContent = "";
          eachIntFormulaEl.textContent = "";
          eachExtFormulaEl.textContent = "";
          checkSumEl.textContent = "";
          return;
        }

        errorMsg.classList.add("hidden");

        // Sum of interior angles
        const sum = (n - 2) * 180;
        sumEl.textContent = formatAngle(sum);
        sumFormulaEl.textContent = `Using (n − 2) × 180° with n = ${n}`;

        if (regularCheckbox.checked) {
          const eachInterior = sum / n;
          const eachExterior = 360 / n;
          eachIntEl.textContent = formatAngle(eachInterior);
          eachExtEl.textContent = formatAngle(eachExterior);
          eachIntFormulaEl.textContent = "Using ((n − 2) × 180°) / n";
          eachExtFormulaEl.textContent =
            "Using 360° / n or 180° − interior angle";
          checkSumEl.textContent = `${formatAngle(eachInterior).replace(
            "°",
            "°"
          )} + ${formatAngle(eachExterior).replace("°", "°")} = ${formatAngle(
            eachInterior + eachExterior
          )}`;
        } else {
          eachIntEl.textContent = "Varies (not regular)";
          eachExtEl.textContent = "Varies (not regular)";
          eachIntFormulaEl.textContent =
            "Only the sum is fixed for irregular polygons.";
          eachExtFormulaEl.textContent =
            "Exterior angles can differ at each vertex.";
          checkSumEl.textContent = "";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const calcBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const nInput = document.getElementById("sides-input");
        const regularCheckbox = document.getElementById("regular-checkbox");

        calcBtn.addEventListener("click", function (e) {
          e.preventDefault();
          updateCalculator();
        });

        resetBtn.addEventListener("click", function (e) {
          e.preventDefault();
          nInput.value = 5;
          regularCheckbox.checked = true;
          updateCalculator();
        });

        nInput.addEventListener("input", function () {
          // Live update but debounce via simple timeout if needed; for now, direct
          updateCalculator();
        });

        regularCheckbox.addEventListener("change", updateCalculator);

        // Initial calculation
        updateCalculator();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
