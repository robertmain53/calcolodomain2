      // Utility functions
      function fmtCurrency(v) {
        if (!isFinite(v)) return "$0";
        return v.toLocaleString(undefined, {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 2,
        });
      }
      function fmtNumber(v, digits = 0) {
        if (!isFinite(v)) return "0";
        return v.toLocaleString(undefined, { maximumFractionDigits: digits });
      }

      // Poverty guideline approximation (very rough, single-country agnostic)
      function povertyGuideline(familySize) {
        const base = 14580; // approx US 48 states 2024
        const add = 5140;
        if (familySize <= 1) return base;
        return base + (familySize - 1) * add;
      }

      function buildSingleLoanFromInputs() {
        const balance =
          parseFloat(document.getElementById("loan-amount").value) || 0;
        const rate =
          (parseFloat(document.getElementById("interest-rate").value) || 0) /
          100;
        return [{ balance, rate }];
      }

      function buildLoansArray() {
        const modeMulti = !document
          .getElementById("single-loan-section")
          .classList.contains("hidden");
        if (!modeMulti) {
          return buildSingleLoanFromInputs();
        }
        const rows = document.querySelectorAll(".loan-row");
        const loans = [];
        rows.forEach((row) => {
          const bal = parseFloat(row.querySelector(".loan-balance").value) || 0;
          const rate =
            (parseFloat(row.querySelector(".loan-rate").value) || 0) / 100;
          if (bal > 0 && rate >= 0) {
            loans.push({ balance: bal, rate });
          }
        });
        return loans.length ? loans : buildSingleLoanFromInputs();
      }

      function weightedAverageRate(loans) {
        let total = 0,
          wsum = 0;
        loans.forEach((l) => {
          total += l.balance;
          wsum += l.balance * l.rate;
        });
        if (total <= 0) return 0;
        return wsum / total;
      }

      function accrueGrace(balance, rate, months) {
        const r = rate / 12;
        if (r <= 0 || months <= 0) return balance;
        return balance * Math.pow(1 + r, months);
      }

      function amortizationSchedule(balance, rate, payment, maxMonths = 600) {
        const r = rate / 12;
        const schedule = [];
        let month = 0;
        let totalInterest = 0;
        const eps = 0.01;

        while (balance > eps && month < maxMonths) {
          month++;
          const interest = balance * r;
          let principal = payment - interest;
          if (principal <= 0) {
            // payment too low to cover interest
            principal = 0;
          }
          if (principal > balance) {
            principal = balance;
          }
          const actualPayment = principal + interest;
          balance -= principal;
          totalInterest += interest;
          schedule.push({
            month,
            payment: actualPayment,
            principal,
            interest,
            balance: Math.max(0, balance),
          });
          if (balance <= eps) {
            balance = 0;
            break;
          }
        }
        return { schedule, totalInterest };
      }

      function computeStandardPlan(
        loans,
        termYears,
        graceMonths,
        extraPayment
      ) {
        const totalPrincipal = loans.reduce((s, l) => s + l.balance, 0);
        const rate = weightedAverageRate(loans);
        const balanceAfterGrace = accrueGrace(
          totalPrincipal,
          rate,
          graceMonths
        );
        const n = termYears * 12;
        const r = rate / 12;
        let basePayment = 0;
        if (rate === 0 || r === 0) {
          basePayment = balanceAfterGrace / n;
        } else {
          basePayment = (r * balanceAfterGrace) / (1 - Math.pow(1 + r, -n));
        }
        const payment = basePayment + (extraPayment || 0);
        const { schedule, totalInterest } = amortizationSchedule(
          balanceAfterGrace,
          rate,
          payment,
          n + 600
        );
        return {
          payment,
          totalInterest,
          months: schedule.length,
          schedule,
          balanceAfterGrace,
          rate,
        };
      }

      function computeTargetPlan(loans, graceMonths, targetPayment) {
        const totalPrincipal = loans.reduce((s, l) => s + l.balance, 0);
        const rate = weightedAverageRate(loans);
        const balanceAfterGrace = accrueGrace(
          totalPrincipal,
          rate,
          graceMonths
        );
        const r = rate / 12;
        // If target payment is too low, set to interest-only + small principal
        const minPayment =
          r > 0 ? balanceAfterGrace * r + 1 : balanceAfterGrace / 600;
        const payment = Math.max(targetPayment, minPayment);
        const { schedule, totalInterest } = amortizationSchedule(
          balanceAfterGrace,
          rate,
          payment,
          600
        );
        return {
          payment,
          totalInterest,
          months: schedule.length,
          schedule,
          balanceAfterGrace,
          rate,
        };
      }

      function computeIDRPlan(loans, annualIncome, familySize, idrPercent) {
        const totalPrincipal = loans.reduce((s, l) => s + l.balance, 0);
        const rate = weightedAverageRate(loans);
        const pov = povertyGuideline(familySize);
        const discretionary = Math.max(0, annualIncome - 1.5 * pov);
        const annualPayment = discretionary * (idrPercent / 100);
        const payment = annualPayment / 12;
        const r = rate / 12;
        const termMonths = 240; // 20 years typical
        const { schedule, totalInterest } = amortizationSchedule(
          totalPrincipal,
          rate,
          payment,
          termMonths
        );
        const last = schedule[schedule.length - 1];
        const remaining = last ? last.balance : totalPrincipal;
        const forgiveness = remaining > 0 ? remaining : 0;
        return {
          payment,
          totalInterest,
          months: schedule.length,
          schedule,
          forgiveness,
          rate,
        };
      }

      function updateResultsDisplay(plan, type) {
        const monthlyEl = document.getElementById("result-monthly");
        const interestEl = document.getElementById("result-interest");
        const termEl = document.getElementById("result-term");
        const termNoteEl = document.getElementById("result-term-note");
        const interestNoteEl = document.getElementById("result-interest-note");
        const forgivenessEl = document.getElementById("result-forgiveness");

        if (!plan || !isFinite(plan.payment)) {
          monthlyEl.textContent = "$0";
          interestEl.textContent = "$0";
          termEl.textContent = "0 years";
          termNoteEl.textContent = "Enter valid loan details to see results.";
          interestNoteEl.textContent = "Over the life of the loan.";
          forgivenessEl.classList.add("hidden");
          return;
        }

        monthlyEl.textContent = fmtCurrency(plan.payment);
        interestEl.textContent = fmtCurrency(plan.totalInterest);
        const years = Math.floor(plan.months / 12);
        const monthsRem = plan.months % 12;
        const termStr =
          years > 0
            ? `${years} yr${years > 1 ? "s" : ""}${
                monthsRem ? ` ${monthsRem} mo` : ""
              }`
            : `${monthsRem} months`;
        termEl.textContent = termStr;
        termNoteEl.textContent =
          type === "idr"
            ? "Estimated time until forgiveness or payoff under income-driven repayment."
            : "Estimated time until payoff with this strategy.";
        interestNoteEl.textContent =
          "Total interest paid over the modeled period.";

        if (type === "idr" && plan.forgiveness && plan.forgiveness > 1) {
          forgivenessEl.textContent = `Estimated remaining balance of ${fmtCurrency(
            plan.forgiveness
          )} could be forgiven after 20 years under this simplified IDR model. Actual forgiveness rules and tax treatment vary.`;
          forgivenessEl.classList.remove("hidden");
        } else {
          forgivenessEl.classList.add("hidden");
        }

        // Update amortization table with first 240 rows max
        const tbody = document.getElementById("schedule-body");
        tbody.innerHTML = "";
        if (plan.schedule && plan.schedule.length) {
          const maxRows = Math.min(plan.schedule.length, 240);
          plan.schedule.slice(0, maxRows).forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
          <td class="px-3 py-1 whitespace-nowrap text-gray-700">${
            row.month
          }</td>
          <td class="px-3 py-1 whitespace-nowrap text-right">${fmtCurrency(
            row.payment
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right">${fmtCurrency(
            row.principal
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right">${fmtCurrency(
            row.interest
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right">${fmtCurrency(
            row.balance
          )}</td>
        `;
            tbody.appendChild(tr);
          });
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const modeSingleBtn = document.getElementById("mode-single");
        const modeMultiBtn = document.getElementById("mode-multi");
        const singleSection = document.getElementById("single-loan-section");
        const multiSection = document.getElementById("multi-loan-section");
        const loanList = document.getElementById("loan-list");
        const addLoanBtn = document.getElementById("add-loan-btn");
        const calcBtn = document.getElementById("calculate-btn");
        const errorEl = document.getElementById("calc-error");
        const planPills = document.querySelectorAll(".plan-pill");
        const scheduleWrapper = document.getElementById("schedule-wrapper");
        const toggleScheduleBtn = document.getElementById(
          "toggle-schedule-btn"
        );

        let lastPlans = {
          standard: null,
          target: null,
          extra: null,
          idr: null,
        };
        let activePlanKey = "standard";

        function setMode(single) {
          if (single) {
            singleSection.classList.remove("hidden");
            multiSection.classList.add("hidden");
            modeSingleBtn.classList.replace(
              "border-gray-300",
              "border-blue-600"
            );
            modeSingleBtn.classList.replace("text-gray-700", "text-blue-600");
            modeSingleBtn.classList.replace("bg-white", "bg-blue-50");
            modeMultiBtn.classList.replace(
              "border-blue-600",
              "border-gray-300"
            );
            modeMultiBtn.classList.replace("text-blue-600", "text-gray-700");
            modeMultiBtn.classList.replace("bg-blue-50", "bg-white");
          } else {
            singleSection.classList.add("hidden");
            multiSection.classList.remove("hidden");
            modeMultiBtn.classList.replace(
              "border-gray-300",
              "border-blue-600"
            );
            modeMultiBtn.classList.replace("text-gray-700", "text-blue-600");
            modeMultiBtn.classList.replace("bg-white", "bg-blue-50");
            modeSingleBtn.classList.replace(
              "border-blue-600",
              "border-gray-300"
            );
            modeSingleBtn.classList.replace("text-blue-600", "text-gray-700");
            modeSingleBtn.classList.replace("bg-blue-50", "bg-white");
            if (!loanList.children.length) {
              addLoanRow(10000, 5.5);
            }
          }
        }

        function addLoanRow(balance = 10000, rate = 5.5) {
          const idx = loanList.children.length + 1;
          const div = document.createElement("div");
          div.className = "loan-row grid grid-cols-12 gap-2 items-end";
          div.innerHTML = `
        <div class="col-span-5">
          <label class="block text-xs font-medium text-gray-700">Loan ${idx} balance</label>
          <div class="mt-1 relative">
            <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-500">$</span>
            <input type="number" min="0" step="100" value="${balance}" class="loan-balance pl-7 block w-full border border-gray-300 rounded-md py-1.5 text-xs focus:ring-blue-500 focus:border-blue-500" />
          </div>
        </div>
        <div class="col-span-4">
          <label class="block text-xs font-medium text-gray-700">Interest rate</label>
          <div class="mt-1 relative">
            <input type="number" min="0" max="25" step="0.1" value="${rate}" class="loan-rate block w-full border border-gray-300 rounded-md py-1.5 pr-8 text-xs focus:ring-blue-500 focus:border-blue-500" />
            <span class="absolute inset-y-0 right-0 pr-2 flex items-center text-gray-500 text-xs">%</span>
          </div>
        </div>
        <div class="col-span-2 flex items-center">
          <button type="button" class="remove-loan text-xs text-red-600 hover:underline mt-5">Remove</button>
        </div>
      `;
          loanList.appendChild(div);
          div.querySelector(".remove-loan").addEventListener("click", () => {
            div.remove();
          });
        }

        modeSingleBtn.addEventListener("click", () => setMode(true));
        modeMultiBtn.addEventListener("click", () => setMode(false));
        addLoanBtn.addEventListener("click", () => addLoanRow());

        planPills.forEach((pill) => {
          pill.addEventListener("click", () => {
            planPills.forEach((p) => {
              p.classList.remove("plan-pill-active");
              p.classList.remove("bg-blue-50");
              p.classList.add("bg-white");
              p.classList.add("border-gray-300");
              p.classList.remove("border-blue-600");
            });
            pill.classList.add("plan-pill-active");
            pill.classList.add("bg-blue-50");
            pill.classList.remove("bg-white");
            pill.classList.add("border-blue-600");
            pill.classList.remove("border-gray-300");
            const key = pill.getAttribute("data-plan");
            activePlanKey = key;
            if (lastPlans[key]) {
              updateResultsDisplay(
                lastPlans[key],
                key === "idr" ? "idr" : "standard"
              );
            }
          });
        });

        toggleScheduleBtn.addEventListener("click", () => {
          const hidden = scheduleWrapper.classList.contains("hidden");
          if (hidden) {
            scheduleWrapper.classList.remove("hidden");
            toggleScheduleBtn.textContent = "Hide schedule";
          } else {
            scheduleWrapper.classList.add("hidden");
            toggleScheduleBtn.textContent = "Show first 24 payments";
          }
        });

        calcBtn.addEventListener("click", () => {
          errorEl.classList.add("hidden");
          const loans = buildLoansArray();
          const totalPrincipal = loans.reduce((s, l) => s + l.balance, 0);
          if (totalPrincipal <= 0) {
            errorEl.textContent =
              "Please enter at least one loan with a positive balance.";
            errorEl.classList.remove("hidden");
            return;
          }
          const termYears =
            parseInt(document.getElementById("term-years").value, 10) || 10;
          const graceMonths =
            parseInt(document.getElementById("grace-months").value, 10) || 0;
          const extraPayment =
            parseFloat(document.getElementById("extra-payment").value) || 0;
          const targetPayment =
            parseFloat(document.getElementById("target-payment").value) || 0;
          const annualIncome =
            parseFloat(document.getElementById("annual-income").value) || 0;
          const familySize = Math.max(
            1,
            parseInt(document.getElementById("family-size").value, 10) || 1
          );
          const idrPercent =
            parseFloat(document.getElementById("idr-percent").value) || 10;

          try {
            const standardPlan = computeStandardPlan(
              loans,
              termYears,
              graceMonths,
              0
            );
            const extraPlan =
              extraPayment > 0
                ? computeStandardPlan(
                    loans,
                    termYears,
                    graceMonths,
                    extraPayment
                  )
                : standardPlan;
            const targetPlan =
              targetPayment > 0
                ? computeTargetPlan(loans, graceMonths, targetPayment)
                : standardPlan;
            const idrPlan =
              annualIncome > 0
                ? computeIDRPlan(loans, annualIncome, familySize, idrPercent)
                : null;

            lastPlans.standard = standardPlan;
            lastPlans.extra = extraPlan;
            lastPlans.target = targetPlan;
            lastPlans.idr = idrPlan;

            let planToShow = standardPlan;
            let type = "standard";
            if (activePlanKey === "extra" && extraPlan) {
              planToShow = extraPlan;
            } else if (activePlanKey === "target" && targetPayment > 0) {
              planToShow = targetPlan;
            } else if (activePlanKey === "idr" && idrPlan) {
              planToShow = idrPlan;
              type = "idr";
            } else if (activePlanKey === "idr" && !idrPlan) {
              errorEl.textContent =
                "Enter your income to estimate an income-driven payment.";
              errorEl.classList.remove("hidden");
            }

            updateResultsDisplay(planToShow, type);
          } catch (e) {
            console.error(e);
            errorEl.textContent =
              "Something went wrong. Please check your inputs.";
            errorEl.classList.remove("hidden");
          }
        });

        // Initial mode and sample calculation
        setMode(true);
        calcBtn.click();
      });
    </script>

