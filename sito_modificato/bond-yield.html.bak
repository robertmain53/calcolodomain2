    <script>
      // Utility: format number as percentage with 2 decimals
      function fmtPct(v) {
        if (!isFinite(v)) return "–";
        return v.toFixed(2) + "%";
      }
      // Utility: format currency with 2 decimals
      function fmtCur(v) {
        if (!isFinite(v)) return "–";
        return "$" + v.toFixed(2);
      }

      function buildCashflows(face, couponRate, freq, years) {
        const periods = Math.round(years * freq);
        const cPerPeriod = (face * (couponRate / 100)) / freq;
        const flows = [];
        for (let t = 1; t <= periods; t++) {
          const timeYears = t / freq;
          const principal = t === periods ? face : 0;
          flows.push({
            period: t,
            timeYears,
            coupon: cPerPeriod,
            principal,
            total: cPerPeriod + principal,
          });
        }
        return flows;
      }

      function priceFromYield(flows, yAnnual, freq) {
        const yPer = yAnnual / 100 / freq;
        let pv = 0;
        flows.forEach((f) => {
          const t = f.period;
          pv += f.total / Math.pow(1 + yPer, t);
        });
        return pv;
      }

      function yieldFromPrice(flows, price, freq) {
        // Bisection on annual yield in %
        let low = -50,
          high = 100,
          mid;
        const maxIter = 80;
        for (let i = 0; i < maxIter; i++) {
          mid = (low + high) / 2;
          const pv = priceFromYield(flows, mid, freq);
          if (Math.abs(pv - price) < 1e-6) break;
          if (pv > price) {
            // discount rate too low
            low = mid;
          } else {
            high = mid;
          }
        }
        return mid;
      }

      function updateSolveMode() {
        const mode = document.querySelector("input.solve-mode:checked").value;
        const priceGroup = document.getElementById("priceInputGroup");
        const yieldGroup = document.getElementById("yieldInputGroup");
        if (mode === "yield") {
          priceGroup.classList.remove("hidden");
          yieldGroup.classList.add("hidden");
        } else {
          priceGroup.classList.add("hidden");
          yieldGroup.classList.remove("hidden");
        }
      }

      document.querySelectorAll("input.solve-mode").forEach((r) => {
        r.addEventListener("change", updateSolveMode);
      });

      document
        .getElementById("resetBtn")
        .addEventListener("click", function () {
          document.getElementById("faceValue").value = 1000;
          document.getElementById("couponRate").value = 5;
          document.getElementById("yearsToMaturity").value = 10;
          document.getElementById("couponFrequency").value = "2";
          document.getElementById("cleanPrice").value = 95;
          document.getElementById("ytmInput").value = 6;
          document.getElementById("yearsToCall").value = 5;
          document.getElementById("callPrice").value = 100;
          document.getElementById("enableCall").checked = false;
          document.getElementById("calcError").classList.add("hidden");
          document.getElementById("resultsSection").classList.add("hidden");
        });

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const face = parseFloat(document.getElementById("faceValue").value);
          const couponRate = parseFloat(
            document.getElementById("couponRate").value
          );
          const yearsMat = parseFloat(
            document.getElementById("yearsToMaturity").value
          );
          const freq = parseInt(
            document.getElementById("couponFrequency").value,
            10
          );
          const mode = document.querySelector("input.solve-mode:checked").value;
          const enableCall = document.getElementById("enableCall").checked;
          const yearsCall = parseFloat(
            document.getElementById("yearsToCall").value
          );
          const callPricePct = parseFloat(
            document.getElementById("callPrice").value
          );

          const errEl = document.getElementById("calcError");
          errEl.classList.add("hidden");
          errEl.textContent = "";

          if (!(face > 0 && couponRate >= 0 && yearsMat > 0 && freq > 0)) {
            errEl.textContent =
              "Please enter valid positive values for face value, years to maturity, and coupon frequency.";
            errEl.classList.remove("hidden");
            return;
          }

          let cleanPricePct, ytmInput;
          if (mode === "yield") {
            cleanPricePct = parseFloat(
              document.getElementById("cleanPrice").value
            );
            if (!(cleanPricePct > 0)) {
              errEl.textContent = "Please enter a valid clean price.";
              errEl.classList.remove("hidden");
              return;
            }
          } else {
            ytmInput = parseFloat(document.getElementById("ytmInput").value);
            if (!isFinite(ytmInput)) {
              errEl.textContent = "Please enter a valid target yield.";
              errEl.classList.remove("hidden");
              return;
            }
          }

          const flowsMat = buildCashflows(face, couponRate, freq, yearsMat);

          let cleanPrice, ytm;
          if (mode === "yield") {
            cleanPrice = face * (cleanPricePct / 100);
            ytm = yieldFromPrice(flowsMat, cleanPrice, freq);
          } else {
            ytm = ytmInput;
            cleanPrice = priceFromYield(flowsMat, ytm, freq);
            cleanPricePct = (cleanPrice / face) * 100;
            document.getElementById("cleanPrice").value =
              cleanPricePct.toFixed(2);
          }

          const annualCoupon = face * (couponRate / 100);
          const currentYield = (annualCoupon / cleanPrice) * 100;

          // Simple accrued interest: assume half period elapsed
          const cPerPeriod = annualCoupon / freq;
          const accrued = cPerPeriod * 0.5;
          const dirtyPrice = cleanPrice + accrued;

          // Capital gain/loss at maturity
          const capitalGain = face - cleanPrice;

          // Yield to call
          let ytc = null;
          if (enableCall && yearsCall > 0) {
            const flowsCall = buildCashflows(face, couponRate, freq, yearsCall);
            const callPrice = face * (callPricePct / 100);
            // Adjust last principal to call price
            if (flowsCall.length > 0) {
              flowsCall[flowsCall.length - 1].principal = callPrice;
              flowsCall[flowsCall.length - 1].total =
                flowsCall[flowsCall.length - 1].coupon + callPrice;
            }
            ytc = yieldFromPrice(flowsCall, cleanPrice, freq);
          }

          const ytw = ytc !== null ? Math.min(ytm, ytc) : ytm;

          // Update outputs
          document.getElementById("currentYieldOut").textContent =
            fmtPct(currentYield);
          document.getElementById("ytmOut").textContent = fmtPct(ytm);
          document.getElementById("ytcOut").textContent =
            ytc !== null ? fmtPct(ytc) : "n/a";
          document
            .getElementById("ytcBadge")
            .classList.toggle("hidden", ytc === null);

          document.getElementById("cleanPriceOut").textContent =
            fmtCur(cleanPrice);
          document.getElementById("dirtyPriceOut").textContent =
            fmtCur(dirtyPrice);
          document.getElementById("accruedOut").textContent = fmtCur(accrued);
          document.getElementById("annualCouponOut").textContent =
            fmtCur(annualCoupon);

          document.getElementById("couponPerPeriodOut").textContent =
            fmtCur(cPerPeriod);
          document.getElementById("periodsToMaturityOut").textContent =
            flowsMat.length.toString();
          document.getElementById("capitalGainOut").textContent =
            fmtCur(capitalGain);
          document.getElementById("ytwOut").textContent = fmtPct(ytw);

          // Cash-flow table
          const tbody = document.getElementById("cashflowTableBody");
          tbody.innerHTML = "";
          flowsMat.forEach((f) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
        <td class="px-2 py-1 border-b">${f.period}</td>
        <td class="px-2 py-1 border-b text-right">${f.timeYears.toFixed(2)}</td>
        <td class="px-2 py-1 border-b text-right">${fmtCur(f.coupon)}</td>
        <td class="px-2 py-1 border-b text-right">${fmtCur(f.principal)}</td>
        <td class="px-2 py-1 border-b text-right">${fmtCur(f.total)}</td>
      `;
            tbody.appendChild(tr);
          });

          document.getElementById("resultsSection").classList.remove("hidden");
        });

      // Initialize solve mode UI
      updateSolveMode();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
