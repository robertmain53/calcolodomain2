            Calculators for Everyone
          </p>
        </div>
      </div>
    </footer>

    <script src="/assets/js/mobile-menu.js"></script>
    <script src="/search.js"></script>

    <script>
      // Tab handling
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = document.querySelectorAll(".tab-panel");

      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          tabButtons.forEach((b) => {
            b.classList.remove("tab-active");
            b.setAttribute("aria-selected", "false");
          });
          tabPanels.forEach((p) => p.classList.add("hidden"));
          btn.classList.add("tab-active");
          btn.setAttribute("aria-selected", "true");
          document.getElementById("tab-" + target).classList.remove("hidden");
        });
      });

      function toMeters(value, unit) {
        if (!isFinite(value)) return NaN;
        return unit === "yd" ? value * 0.9144 : value;
      }
      function fromMeters(value, unit) {
        if (!isFinite(value)) return NaN;
        return unit === "yd" ? value / 0.9144 : value;
      }
      function toCentimeters(value, unit) {
        if (!isFinite(value)) return NaN;
        return unit === "in" ? value * 2.54 : value;
      }
      function fromCentimeters(value, unit) {
        if (!isFinite(value)) return NaN;
        return unit === "in" ? value / 2.54 : value;
      }

      // Pattern calculator
      document
        .getElementById("btn-pattern-calc")
        .addEventListener("click", () => {
          const total = parseFloat(
            document.getElementById("pattern-total-length").value
          );
          const totalUnit = document.getElementById("pattern-total-unit").value;
          const skeinLen = parseFloat(
            document.getElementById("skein-length").value
          );
          const skeinUnit = document.getElementById("skein-length-unit").value;
          const margin =
            parseFloat(document.getElementById("safety-margin").value) || 0;

          if (!(total > 0) || !(skeinLen > 0)) {
            alert("Please enter both pattern yardage and skein length.");
            return;
          }

          // Convert both to meters
          const totalM = toMeters(total, totalUnit);
          const skeinM = toMeters(skeinLen, skeinUnit);
          if (!isFinite(totalM) || !isFinite(skeinM) || skeinM <= 0) {
            alert("Invalid values. Please check your inputs.");
            return;
          }

          const totalWithMarginM = totalM * (1 + margin / 100);
          const skeins = Math.ceil(totalWithMarginM / skeinM);

          // Display in original pattern unit
          const displayTotal = fromMeters(totalWithMarginM, totalUnit);
          const unitLabel = totalUnit === "m" ? "m" : "yd";

          document.getElementById("pattern-total-display").textContent =
            displayTotal.toFixed(1) + " " + unitLabel;
          document.getElementById("pattern-skeins-display").textContent =
            skeins;
          document.getElementById("pattern-results").classList.remove("hidden");
        });

      // Swatch calculator
      document
        .getElementById("btn-swatch-calc")
        .addEventListener("click", () => {
          const swW = parseFloat(document.getElementById("swatch-width").value);
          const swH = parseFloat(
            document.getElementById("swatch-height").value
          );
          const swDimUnit = document.getElementById("swatch-dim-unit").value;
          const swLen = parseFloat(
            document.getElementById("swatch-length").value
          );
          const swLenUnit = document.getElementById("swatch-length-unit").value;

          const projW = parseFloat(
            document.getElementById("project-width").value
          );
          const projH = parseFloat(
            document.getElementById("project-height").value
          );
          const projDimUnit = document.getElementById("project-dim-unit").value;

          const margin =
            parseFloat(document.getElementById("swatch-safety-margin").value) ||
            0;
          const skeinLen = parseFloat(
            document.getElementById("swatch-skein-length").value
          );
          const skeinUnit = document.getElementById(
            "swatch-skein-length-unit"
          ).value;

          if (
            !(swW > 0) ||
            !(swH > 0) ||
            !(swLen > 0) ||
            !(projW > 0) ||
            !(projH > 0) ||
            !(skeinLen > 0)
          ) {
            alert("Please fill in all swatch, project, and skein fields.");
            return;
          }

          // Convert dimensions to cm
          const swWcm = toCentimeters(swW, swDimUnit);
          const swHcm = toCentimeters(swH, swDimUnit);
          const projWcm = toCentimeters(projW, projDimUnit);
          const projHcm = toCentimeters(projH, projDimUnit);

          const swArea = swWcm * swHcm;
          const projArea = projWcm * projHcm;
          if (!(swArea > 0) || !(projArea > 0)) {
            alert("Invalid dimensions. Please check your inputs.");
            return;
          }

          // Convert swatch length to meters
          const swLenM = toMeters(swLen, swLenUnit);
          const yarnPerCm2 = swLenM / swArea;
          const totalM = yarnPerCm2 * projArea;
          const totalWithMarginM = totalM * (1 + margin / 100);

          // Convert skein length to meters
          const skeinM = toMeters(skeinLen, skeinUnit);
          const skeins = Math.ceil(totalWithMarginM / skeinM);

          // Display in skein unit for convenience
          const displayTotal = fromMeters(totalWithMarginM, skeinUnit);
          const unitLabel = skeinUnit === "m" ? "m" : "yd";

          document.getElementById("swatch-total-display").textContent =
            displayTotal.toFixed(1) + " " + unitLabel;
          document.getElementById("swatch-skeins-display").textContent = skeins;
          document.getElementById("swatch-results").classList.remove("hidden");
        });

      // Substitution calculator
      document.getElementById("btn-sub-calc").addEventListener("click", () => {
        const origSkeins = parseFloat(
          document.getElementById("orig-skeins").value
        );
        const origLen = parseFloat(
          document.getElementById("orig-skein-length").value
        );
        const origUnit = document.getElementById(
          "orig-skein-length-unit"
        ).value;

        const subLen = parseFloat(
          document.getElementById("sub-skein-length").value
        );
        const subUnit = document.getElementById("sub-skein-length-unit").value;
        const margin =
          parseFloat(document.getElementById("sub-safety-margin").value) || 0;

        if (!(origSkeins > 0) || !(origLen > 0) || !(subLen > 0)) {
          alert(
            "Please enter original skeins, original skein length, and substitute skein length."
          );
          return;
        }

        const origTotalM = toMeters(origSkeins * origLen, origUnit);
        const targetM = origTotalM * (1 + margin / 100);
        const subLenM = toMeters(subLen, subUnit);
        const subSkeins = Math.ceil(targetM / subLenM);

        const displayOrig = fromMeters(origTotalM, origUnit);
        const unitLabel = origUnit === "m" ? "m" : "yd";

        document.getElementById("sub-orig-total-display").textContent =
          displayOrig.toFixed(1) + " " + unitLabel;
        document.getElementById("sub-skeins-display").textContent = subSkeins;
        document.getElementById("sub-results").classList.remove("hidden");
      });

      // Leftover yarn calculator
      document
        .getElementById("btn-leftover-calc")
        .addEventListener("click", () => {
          const skeins = parseFloat(
            document.getElementById("leftover-skeins").value
          );
          const len = parseFloat(
            document.getElementById("leftover-skein-length").value
          );
          const unit = document.getElementById(
            "leftover-skein-length-unit"
          ).value;

          if (!(skeins > 0) || !(len > 0)) {
            alert("Please enter the number of skeins and length per skein.");
            return;
          }

          const total = skeins * len;
          const unitLabel = unit === "m" ? "m" : "yd";
          document.getElementById("leftover-total-display").textContent =
            total.toFixed(1) + " " + unitLabel;

          // Provide a simple suggestion
          const totalM = toMeters(total, unit);
          let suggestion =
            "You have enough yarn for small accessories or colorwork.";

          if (totalM < 150) {
            suggestion =
              "You likely have enough for small items like baby hats, headbands, or dishcloths.";
          } else if (totalM < 300) {
            suggestion =
              "You likely have enough for a hat, cowl, or short scarf.";
          } else if (totalM < 600) {
            suggestion =
              "You likely have enough for a full scarf, shawlette, or a pair of adult socks.";
          } else if (totalM < 1000) {
            suggestion =
              "You likely have enough for a baby blanket, large shawl, or light sweater in smaller sizes.";
          } else {
            suggestion =
              "You have a generous amount of yarn—enough for larger garments like adult sweaters or blankets, depending on yarn weight and size.";
          }

          document.getElementById("leftover-suggestion").textContent =
            suggestion;
          document
            .getElementById("leftover-results")
            .classList.remove("hidden");
        });

      // Simple FAQ toggle (in addition to global script_faq if present)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((icon) => (icon.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              btn.querySelector("span:last-child").textContent = "−";
            }
          });
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
    <script>
  (function () {
    var loadMathJax = function () {
      if (window.__mathjaxLoading) return;
      window.__mathjaxLoading = true;
      var script = document.createElement("script");
      script.id = "MathJax-script";
      script.async = true;
      script.src = "https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-chtml.js";
      document.head.appendChild(script);
    };

    var target = document.querySelector(
      ".formula-box, .mathjax, .math, .formula, [data-mathjax]"
    );

    if (!target) return;

    if ("IntersectionObserver" in window) {
      var observer = new IntersectionObserver(
        function (entries) {
          if (entries.some(function (entry) { return entry.isIntersecting; })) {
            observer.disconnect();
            loadMathJax();
          }
        },
        { rootMargin: "200px" }
      );
      observer.observe(target);
    } else {
      window.addEventListener(
        "load",
        function () {
          setTimeout(loadMathJax, 1000);
        },
        { once: true }
      );
    }
  })();
</script>
  
