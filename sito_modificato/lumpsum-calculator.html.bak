    <script>
      function formatCurrency(value) {
        if (!isFinite(value)) return "₹ 0";
        const abs = Math.abs(value);
        let suffix = "";
        let num = value;

        if (abs >= 1e7) {
          // crore
          num = value / 1e7;
          suffix = " Cr";
        } else if (abs >= 1e5) {
          // lakh
          num = value / 1e5;
          suffix = " L";
        }

        return (
          "₹ " +
          num.toLocaleString("en-IN", {
            maximumFractionDigits: 2,
            minimumFractionDigits: 0,
          }) +
          suffix
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(2).replace(/\.00$/, "") + "%";
      }

      function calculateLumpsum() {
        const mode =
          document.querySelector(".mode-btn.bg-blue-50")?.dataset.mode || "fv";

        const pvInput = document.getElementById("pvInput");
        const targetInput = document.getElementById("targetInput");
        const rateInput = document.getElementById("rateInput");
        const yearsInput = document.getElementById("yearsInput");
        const monthsInput = document.getElementById("monthsInput");
        const inflationToggle = document.getElementById("inflationToggle");
        const taxToggle = document.getElementById("taxToggle");
        const inflationInput = document.getElementById("inflationInput");
        const taxInput = document.getElementById("taxInput");
        const errorMsg = document.getElementById("errorMsg");

        let P = parseFloat(pvInput.value) || 0;
        let FVtarget = parseFloat(targetInput.value) || 0;
        let r = parseFloat(rateInput.value) / 100;
        let years = parseFloat(yearsInput.value) || 0;
        let months = parseFloat(monthsInput.value) || 0;
        const n = years + months / 12;

        if (n <= 0) {
          errorMsg.textContent =
            "Please enter an investment duration greater than 0.";
          errorMsg.classList.remove("hidden");
          return;
        }

        if (mode === "fv" && P <= 0) {
          errorMsg.textContent = "Please enter a positive lumpsum amount.";
          errorMsg.classList.remove("hidden");
          return;
        }

        if (mode === "pv" && FVtarget <= 0) {
          errorMsg.textContent = "Please enter a positive target amount.";
          errorMsg.classList.remove("hidden");
          return;
        }

        if (mode === "rate" && (P <= 0 || FVtarget <= 0)) {
          errorMsg.textContent =
            "Please enter both a positive lumpsum and target amount.";
          errorMsg.classList.remove("hidden");
          return;
        }

        errorMsg.classList.add("hidden");

        let FV, gain, cagr;

        if (mode === "fv") {
          FV = P * Math.pow(1 + r, n);
          gain = FV - P;
          cagr = r * 100;
        } else if (mode === "pv") {
          P = FVtarget / Math.pow(1 + r, n);
          pvInput.value = Math.round(P);
          FV = FVtarget;
          gain = FV - P;
          cagr = r * 100;
        } else {
          // implied rate
          r = Math.pow(FVtarget / P, 1 / n) - 1;
          FV = FVtarget;
          gain = FV - P;
          cagr = r * 100;
          rateInput.value = cagr.toFixed(2);
        }

        document.getElementById("fvDisplay").textContent = formatCurrency(FV);
        document.getElementById("gainDisplay").textContent =
          formatCurrency(gain);
        document.getElementById("cagrDisplay").textContent =
          formatPercent(cagr);

        const inflationOn = inflationToggle.checked;
        const taxOn = taxToggle.checked;
        const inflationRate = parseFloat(inflationInput.value) / 100 || 0;
        const taxRate = parseFloat(taxInput.value) / 100 || 0;

        const summary = document.getElementById("inflationTaxSummary");
        if (inflationOn || taxOn) {
          let realFV = FV;
          let afterTaxFV = FV;

          if (inflationOn) {
            realFV = FV / Math.pow(1 + inflationRate, n);
            document.getElementById("realValueDisplay").textContent =
              formatCurrency(realFV);
          }

          if (taxOn) {
            const gains = Math.max(FV - P, 0);
            const tax = gains * taxRate;
            afterTaxFV = FV - tax;
            document.getElementById("postTaxDisplay").textContent =
              formatCurrency(afterTaxFV);
          }

          summary.classList.remove("hidden");
        } else {
          summary.classList.add("hidden");
        }

        const tbody = document.getElementById("projectionBody");
        tbody.innerHTML = "";
        const steps = Math.min(Math.floor(n), 40);
        let balance = P;
        for (let year = 1; year <= steps; year++) {
          const start = balance;
          const end = P * Math.pow(1 + r, year);
          const interest = end - start;
          balance = end;

          const tr = document.createElement("tr");
          tr.className = year % 2 === 0 ? "bg-white" : "bg-gray-50";
          tr.innerHTML = `
        <td class="px-3 py-2 border-b text-gray-700">${year}</td>
        <td class="px-3 py-2 border-b text-right text-gray-700">${formatCurrency(
          start
        )}</td>
        <td class="px-3 py-2 border-b text-right text-gray-700">${formatCurrency(
          interest
        )}</td>
        <td class="px-3 py-2 border-b text-right text-gray-900 font-medium">${formatCurrency(
          end
        )}</td>
      `;
          tbody.appendChild(tr);
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const modeButtons = document.querySelectorAll(".mode-btn");
        const pvGroup = document.getElementById("pvGroup");
        const targetGroup = document.getElementById("targetGroup");
        const rateInput = document.getElementById("rateInput");
        const inflationToggle = document.getElementById("inflationToggle");
        const taxToggle = document.getElementById("taxToggle");
        const inflationGroup = document.getElementById("inflationGroup");
        const taxGroup = document.getElementById("taxGroup");

        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            modeButtons.forEach((b) => {
              b.classList.remove(
                "bg-blue-50",
                "border-blue-600",
                "text-blue-600"
              );
              b.classList.add("bg-white", "border-gray-300", "text-gray-700");
            });
            btn.classList.add("bg-blue-50", "border-blue-600", "text-blue-600");
            btn.classList.remove(
              "bg-white",
              "border-gray-300",
              "text-gray-700"
            );

            const mode = btn.dataset.mode;
            if (mode === "fv") {
              targetGroup.classList.add("hidden");
              rateInput.disabled = false;
            } else if (mode === "pv") {
              targetGroup.classList.remove("hidden");
              rateInput.disabled = false;
            } else {
              targetGroup.classList.remove("hidden");
              rateInput.disabled = false;
            }

            document.getElementById("errorMsg").classList.add("hidden");
            calculateLumpsum();
          });
        });

        inflationToggle.addEventListener("change", () => {
          if (inflationToggle.checked) {
            inflationGroup.classList.remove("hidden");
          } else {
            inflationGroup.classList.add("hidden");
          }
          calculateLumpsum();
        });

        taxToggle.addEventListener("change", () => {
          if (taxToggle.checked) {
            taxGroup.classList.remove("hidden");
          } else {
            taxGroup.classList.add("hidden");
          }
          calculateLumpsum();
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateLumpsum);

        document.getElementById("resetBtn").addEventListener("click", () => {
          document.getElementById("pvInput").value = 500000;
          document.getElementById("targetInput").value = 1500000;
          document.getElementById("rateInput").value = 12;
          document.getElementById("yearsInput").value = 10;
          document.getElementById("monthsInput").value = 0;
          document.getElementById("inflationInput").value = 5;
          document.getElementById("taxInput").value = 10;
          document.getElementById("inflationToggle").checked = false;
          document.getElementById("taxToggle").checked = false;
          document.getElementById("inflationGroup").classList.add("hidden");
          document.getElementById("taxGroup").classList.add("hidden");
          document
            .getElementById("inflationTaxSummary")
            .classList.add("hidden");
          document.getElementById("errorMsg").classList.add("hidden");
          calculateLumpsum();
        });

        [
          "pvInput",
          "targetInput",
          "rateInput",
          "yearsInput",
          "monthsInput",
          "inflationInput",
          "taxInput",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (el) {
            el.addEventListener("input", () => {
              document.getElementById("errorMsg").classList.add("hidden");
            });
          }
        });

        calculateLumpsum();
      });

