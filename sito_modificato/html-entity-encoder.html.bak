    <script>
      // Minimal named entity map for common characters; others will use numeric entities
      const namedEntityMap = {
        "&": "&amp;",
        "<": "&lt;",
        ">": "&gt;",
        '"': "&quot;",
        "'": "&#39;",
        "©": "&copy;",
        "®": "&reg;",
        "€": "&euro;",
        "£": "&pound;",
        "¥": "&yen;",
        "¢": "&cent;",
        "§": "&sect;",
        "±": "&plusmn;",
        "×": "&times;",
        "÷": "&divide;",
        "™": "&trade;",
        "•": "&bull;",
        "…": "&hellip;",
        "–": "&ndash;",
        "—": "&mdash;",
        " ": "&nbsp;",
      };

      function encodeChar(ch, format) {
        const code = ch.codePointAt(0);
        // Prefer named entity if available and format is named
        if (format === "named" && namedEntityMap[ch]) {
          return namedEntityMap[ch];
        }
        if (format === "decimal") {
          return "&#" + code + ";";
        }
        if (format === "hex") {
          return "&#x" + code.toString(16).toUpperCase() + ";";
        }
        // default named fallback: named if exists, else decimal
        if (namedEntityMap[ch]) {
          return namedEntityMap[ch];
        }
        return "&#" + code + ";";
      }

      function encodeHtml(str, mode, format) {
        let result = "";
        for (let i = 0; i < str.length; ) {
          const code = str.codePointAt(i);
          const ch = String.fromCodePoint(code);

          const isSpecial =
            ch === "&" || ch === "<" || ch === ">" || ch === '"' || ch === "'";
          const isNonAscii = code > 0x7f;

          let shouldEncode = false;
          if (mode === "minimal") {
            shouldEncode = isSpecial;
          } else if (mode === "nonAscii") {
            shouldEncode = isSpecial || isNonAscii;
          } else if (mode === "all") {
            shouldEncode = true;
          }

          if (shouldEncode) {
            result += encodeChar(ch, format);
          } else {
            result += ch;
          }

          i += code > 0xffff ? 2 : 1; // handle surrogate pairs
        }
        return result;
      }

      function decodeHtml(str) {
        // Use browser to decode entities safely
        const textarea = document.createElement("textarea");
        textarea.innerHTML = str;
        return textarea.value;
      }

      function updatePreview() {
        const preview = document.getElementById("htmlPreview");
        const fromOutput = document.getElementById("previewFromOutput").checked;
        const source = fromOutput
          ? document.getElementById("outputText").value
          : document.getElementById("inputText").value;
        preview.innerHTML = source;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const input = document.getElementById("inputText");
        const output = document.getElementById("outputText");
        const btnEncode = document.getElementById("btnEncode");
        const btnDecode = document.getElementById("btnDecode");
        const btnSwap = document.getElementById("btnSwap");
        const btnCopyOutput = document.getElementById("btnCopyOutput");
        const btnSelectOutput = document.getElementById("btnSelectOutput");
        const btnClearInput = document.getElementById("btnClearInput");
        const btnPasteInput = document.getElementById("btnPasteInput");
        const previewFromOutput = document.getElementById("previewFromOutput");

        function getSelectedMode() {
          return document.querySelector('input[name="encodeMode"]:checked')
            .value;
        }

        function getSelectedFormat() {
          return document.querySelector('input[name="entityFormat"]:checked')
            .value;
        }

        btnEncode.addEventListener("click", () => {
          const mode = getSelectedMode();
          const format = getSelectedFormat();
          output.value = encodeHtml(input.value, mode, format);
          updatePreview();
        });

        btnDecode.addEventListener("click", () => {
          output.value = decodeHtml(input.value);
          updatePreview();
        });

        btnSwap.addEventListener("click", () => {
          const tmp = input.value;
          input.value = output.value;
          output.value = tmp;
          updatePreview();
        });

        btnCopyOutput.addEventListener("click", async () => {
          try {
            await navigator.clipboard.writeText(output.value);
            btnCopyOutput.textContent = "Copied!";
            setTimeout(() => {
              btnCopyOutput.textContent = "Copy";
            }, 1200);
          } catch (e) {
            output.select();
            document.execCommand("copy");
          }
        });

        btnSelectOutput.addEventListener("click", () => {
          output.focus();
          output.select();
        });

        btnClearInput.addEventListener("click", () => {
          input.value = "";
          updatePreview();
        });

        btnPasteInput.addEventListener("click", async () => {
          if (navigator.clipboard && navigator.clipboard.readText) {
            try {
              const text = await navigator.clipboard.readText();
              input.value = text;
              updatePreview();
            } catch (e) {
              console.warn("Clipboard read failed", e);
            }
          }
        });

        input.addEventListener("input", () => {
          if (!previewFromOutput.checked) {
            updatePreview();
          }
        });

        output.addEventListener("input", () => {
          if (previewFromOutput.checked) {
            updatePreview();
          }
        });

        previewFromOutput.addEventListener("change", updatePreview);

        // Initial preview
        updatePreview();
      });
    </script>

