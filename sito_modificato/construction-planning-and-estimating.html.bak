    <script>
      // Data model for estimate rows
      let estimateRows = [];
      let phaseCounter = 1;
      let rowIdCounter = 1;

      function createDefaultPhaseName() {
        return `Phase ${phaseCounter++}`;
      }

      function addRow(withNewPhase = false) {
        const phaseName =
          withNewPhase || estimateRows.length === 0
            ? createDefaultPhaseName()
            : estimateRows[estimateRows.length - 1]?.phase ||
              createDefaultPhaseName();

        const row = {
          id: rowIdCounter++,
          phase: phaseName,
          item: "",
          qty: 0,
          unit: "",
          unitCost: 0,
          crewSize: 0,
          prodPerDay: 0,
          laborRate: 0,
        };
        estimateRows.push(row);
        renderRows();
        updateTotals();
      }

      function removeRow(id) {
        estimateRows = estimateRows.filter((r) => r.id !== id);
        if (estimateRows.length === 0) {
          phaseCounter = 1;
          addRow(true);
        } else {
          renderRows();
          updateTotals();
        }
      }

      function handleInputChange(id, field, value) {
        const row = estimateRows.find((r) => r.id === id);
        if (!row) return;
        if (
          ["qty", "unitCost", "crewSize", "prodPerDay", "laborRate"].includes(
            field
          )
        ) {
          row[field] = parseFloat(value) || 0;
        } else {
          row[field] = value;
        }
        updateTotals();
      }

      function renderRows() {
        const tbody = document.getElementById("estimateBody");
        tbody.innerHTML = "";
        estimateRows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.className = "border-t align-top";

          const matCost = row.qty * row.unitCost;
          const crewDays = row.prodPerDay > 0 ? row.qty / row.prodPerDay : 0;
          const laborHours = crewDays * row.crewSize * 8;
          const laborCost = laborHours * row.laborRate;
          const durationDays = crewDays;
          const total = matCost + laborCost;

          tr.innerHTML = `
        <td class="px-2 py-1">
          <input type="text" class="w-32 md:w-40 border rounded-md px-2 py-1 text-xs" value="${
            row.phase
          }"
            onchange="handleInputChange(${row.id}, 'phase', this.value)">
        </td>
        <td class="px-2 py-1">
          <input type="text" class="w-40 md:w-48 border rounded-md px-2 py-1 text-xs" value="${
            row.item
          }"
            placeholder="e.g. Concrete slab 4 in"
            onchange="handleInputChange(${row.id}, 'item', this.value)">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" class="w-20 border rounded-md px-2 py-1 text-xs table-input" value="${
            row.qty || ""
          }"
            min="0" step="0.01"
            onchange="handleInputChange(${row.id}, 'qty', this.value)">
        </td>
        <td class="px-2 py-1">
          <input type="text" class="w-16 border rounded-md px-2 py-1 text-xs" value="${
            row.unit
          }"
            placeholder="sq ft, cu yd"
            onchange="handleInputChange(${row.id}, 'unit', this.value)">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" class="w-24 border rounded-md px-2 py-1 text-xs table-input" value="${
            row.unitCost || ""
          }"
            min="0" step="0.01"
            onchange="handleInputChange(${row.id}, 'unitCost', this.value)">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" class="w-16 border rounded-md px-2 py-1 text-xs table-input" value="${
            row.crewSize || ""
          }"
            min="0" step="1"
            onchange="handleInputChange(${row.id}, 'crewSize', this.value)">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" class="w-24 border rounded-md px-2 py-1 text-xs table-input" value="${
            row.prodPerDay || ""
          }"
            min="0" step="0.01"
            onchange="handleInputChange(${row.id}, 'prodPerDay', this.value)">
        </td>
        <td class="px-2 py-1 text-right">
          <input type="number" class="w-24 border rounded-md px-2 py-1 text-xs table-input" value="${
            row.laborRate || ""
          }"
            min="0" step="0.01"
            onchange="handleInputChange(${row.id}, 'laborRate', this.value)">
        </td>
        <td class="px-2 py-1 text-right text-xs md:text-sm">$${matCost.toFixed(
          2
        )}</td>
        <td class="px-2 py-1 text-right text-xs md:text-sm">${laborHours.toFixed(
          1
        )}</td>
        <td class="px-2 py-1 text-right text-xs md:text-sm">$${laborCost.toFixed(
          2
        )}</td>
        <td class="px-2 py-1 text-right text-xs md:text-sm">${durationDays.toFixed(
          1
        )}</td>
        <td class="px-2 py-1 text-right text-xs md:text-sm font-semibold">$${total.toFixed(
          2
        )}</td>
        <td class="px-2 py-1 text-right">
          <button type="button" class="text-red-500 hover:text-red-700 text-xs" onclick="removeRow(${
            row.id
          })">✕</button>
        </td>
      `;
          tbody.appendChild(tr);
        });
      }

      function updateTotals() {
        const contingencyPct =
          parseFloat(document.getElementById("contingency").value) || 0;
        const overheadPct =
          parseFloat(document.getElementById("overhead").value) || 0;
        const profitPct =
          parseFloat(document.getElementById("profit").value) || 0;

        let directCost = 0;
        let totalLaborHours = 0;
        const phaseDurations = {};

        estimateRows.forEach((row) => {
          const matCost = row.qty * row.unitCost;
          const crewDays = row.prodPerDay > 0 ? row.qty / row.prodPerDay : 0;
          const laborHours = crewDays * row.crewSize * 8;
          const laborCost = laborHours * row.laborRate;
          const total = matCost + laborCost;

          directCost += total;
          totalLaborHours += laborHours;

          if (!phaseDurations[row.phase]) phaseDurations[row.phase] = 0;
          phaseDurations[row.phase] += crewDays;
        });

        const contingencyVal = directCost * (contingencyPct / 100);
        const overheadVal = directCost * (overheadPct / 100);
        const profitVal = directCost * (profitPct / 100);
        const totalBid = directCost + contingencyVal + overheadVal + profitVal;

        const criticalDuration = Object.values(phaseDurations).reduce(
          (max, d) => Math.max(max, d || 0),
          0
        );
        const avgDailyCost =
          criticalDuration > 0 ? totalBid / criticalDuration : 0;

        document.getElementById(
          "directCost"
        ).textContent = `$${directCost.toFixed(2)}`;
        document.getElementById(
          "contingencyValue"
        ).textContent = `$${contingencyVal.toFixed(2)}`;
        document.getElementById(
          "overheadValue"
        ).textContent = `$${overheadVal.toFixed(2)}`;
        document.getElementById(
          "profitValue"
        ).textContent = `$${profitVal.toFixed(2)}`;
        document.getElementById("totalBid").textContent = `$${totalBid.toFixed(
          2
        )}`;
        document.getElementById(
          "totalLaborHours"
        ).textContent = `${totalLaborHours.toFixed(1)} h`;
        document.getElementById(
          "criticalDuration"
        ).textContent = `${criticalDuration.toFixed(1)} days`;
        document.getElementById(
          "avgDailyCost"
        ).textContent = `$${avgDailyCost.toFixed(2)}/day`;
      }

      function resetEstimate() {
        if (!confirm("Clear all phases and line items?")) return;
        estimateRows = [];
        phaseCounter = 1;
        rowIdCounter = 1;
        addRow(true);
        document.getElementById("contingency").value = 15;
        document.getElementById("overhead").value = 10;
        document.getElementById("profit").value = 8;
        updateTotals();
      }

      // Expose functions for inline handlers
      window.handleInputChange = handleInputChange;
      window.removeRow = removeRow;

      document.addEventListener("DOMContentLoaded", () => {
        document
          .getElementById("addPhaseBtn")
          .addEventListener("click", () => addRow(true));
        document
          .getElementById("addItemBtn")
          .addEventListener("click", () => addRow(false));
        document
          .getElementById("resetEstimateBtn")
          .addEventListener("click", resetEstimate);

        ["contingency", "overhead", "profit"].forEach((id) => {
          document.getElementById(id).addEventListener("input", updateTotals);
        });

        // Initialize with a few common phases
        addRow(true); // Phase 1
        addRow(false);
        addRow(true); // Phase 2
      });
    </script>

