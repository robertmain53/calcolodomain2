    <script>
      const tabBH = document.getElementById('tab-bh');
      const tabSA = document.getElementById('tab-sa');
      const tabDG = document.getElementById('tab-diag');

      const panelBH = document.getElementById('panel-bh');
      const panelSA = document.getElementById('panel-sa');
      const panelDG = document.getElementById('panel-diag');

      function activateTab(btn, panel) {
        [tabBH, tabSA, tabDG].forEach(b => b.classList.remove('tab-active'));
        btn.classList.add('tab-active');
        [panelBH, panelSA, panelDG].forEach(p => p.classList.add('hidden'));
        panel.classList.remove('hidden');
      }

      tabBH.addEventListener('click', () => activateTab(tabBH, panelBH));
      tabSA.addEventListener('click', () => activateTab(tabSA, panelSA));
      tabDG.addEventListener('click', () => activateTab(tabDG, panelDG));

      const btnCalc = document.getElementById('btn-calc');
      const btnClear = document.getElementById('btn-clear');

      const resBox = document.getElementById('results-box');
      const resArea = document.getElementById('res-area');
      const resPerim = document.getElementById('res-perim');
      const resHeight = document.getElementById('res-height');
      const resVolume = document.getElementById('res-volume');
      const resAngleA = document.getElementById('res-angleA');
      const resAngleB = document.getElementById('res-angleB');
      const resD1 = document.getElementById('res-d1');
      const resD2 = document.getElementById('res-d2');
      const resSpecial = document.getElementById('res-special');

      function round4(x) {
        return Math.round((x + Number.EPSILON) * 10000) / 10000;
      }

      btnCalc.addEventListener('click', () => {
        let A = null, P = null, h = null, angleA = null, angleB = null, d1 = null, d2 = null, volume = '—', note = '';

        // Base + Height
        if (!panelBH.classList.contains('hidden')) {
          const b = parseFloat(document.getElementById('bh-base').value);
          const hh = parseFloat(document.getElementById('bh-height').value);
          const side = parseFloat(document.getElementById('bh-side').value);
          if (isNaN(b) || isNaN(hh) || b <= 0 || hh <= 0) {
            alert('Please enter at least base and height.');
            return;
          }
          A = b * hh;
          h = hh;
          if (!isNaN(side) && side > 0) {
            P = 2 * (b + side);
            const sinTh = h / side;
            if (sinTh > 0 && sinTh <= 1) {
              angleA = Math.asin(sinTh) * 180 / Math.PI;
              angleB = 180 - angleA;
            }
          } else {
            P = 'Need side';
          }

        // Sides + Angle
        } else if (!panelSA.classList.contains('hidden')) {
          const a = parseFloat(document.getElementById('sa-a').value);
          const b = parseFloat(document.getElementById('sa-b').value);
          const ang = parseFloat(document.getElementById('sa-angle').value);
          const prismH = parseFloat(document.getElementById('sa-height').value);
          if (isNaN(a) || isNaN(b) || isNaN(ang) || a <= 0 || b <= 0) {
            alert('Please enter two sides and an angle.');
            return;
          }
          const rad = ang * Math.PI / 180;
          A = a * b * Math.sin(rad);
          h = b * Math.sin(rad);
          P = 2 * (a + b);
          angleA = ang;
          angleB = 180 - ang;
          d1 = Math.sqrt(a*a + b*b - 2*a*b*Math.cos(rad));
          d2 = Math.sqrt(a*a + b*b + 2*a*b*Math.cos(rad));
          if (!isNaN(prismH) && prismH > 0) {
            volume = round4(A * prismH);
          }
          if (Math.abs(ang - 90) < 1e-6) note = 'This is a rectangle.';
          if (Math.abs(a - b) < 1e-6) note = note ? note + ' Also a rhombus.' : 'This is a rhombus.';
          if (Math.abs(ang - 90) < 1e-6 && Math.abs(a - b) < 1e-6) note = 'This is a square.';

        // Diagonals + Angle
        } else {
          const d1v = parseFloat(document.getElementById('dg-d1').value);
          const d2v = parseFloat(document.getElementById('dg-d2').value);
          const ang = parseFloat(document.getElementById('dg-angle').value);
          const optSide = parseFloat(document.getElementById('dg-side-a').value);
          if (isNaN(d1v) || isNaN(d2v) || isNaN(ang) || d1v <= 0 || d2v <= 0) {
            alert('Please enter two diagonals and their angle.');
            return;
          }
          const rad = ang * Math.PI / 180;
          A = (d1v * d2v * Math.sin(rad)) / 2;
          d1 = d1v;
          d2 = d2v;
          if (!isNaN(optSide) && optSide > 0) {
            P = 'Need side b';
          } else {
            P = 'Need sides';
          }
          h = 'Need base';
          angleA = 'Need sides';
          angleB = 'Need sides';
        }

        resBox.classList.remove('hidden');
        resArea.textContent = (A !== null && !isNaN(A)) ? round4(A) : '—';
        resPerim.textContent = (P !== null) ? P : '—';
        resHeight.textContent = (h !== null && !isNaN(h)) ? round4(h) : h ? h : '—';
        resVolume.textContent = volume;
        resAngleA.textContent = (angleA !== null && !isNaN(angleA)) ? round4(angleA) + '°' : angleA ? angleA : '—';
        resAngleB.textContent = (angleB !== null && !isNaN(angleB)) ? round4(angleB) + '°' : angleB ? angleB : '—';
        resD1.textContent = (d1 !== null && !isNaN(d1)) ? round4(d1) : '—';
        resD2.textContent = (d2 !== null && !isNaN(d2)) ? round4(d2) : '—';
        resSpecial.textContent = note;
      });

      btnClear.addEventListener('click', () => {
        document.getElementById('bh-base').value = 8;
        document.getElementById('bh-height').value = 5;
        document.getElementById('bh-side').value = '';
        document.getElementById('sa-a').value = 7;
        document.getElementById('sa-b').value = 4;
        document.getElementById('sa-angle').value = 60;
        document.getElementById('sa-height').value = '';
        document.getElementById('dg-d1').value = 10;
        document.getElementById('dg-d2').value = 7;
        document.getElementById('dg-angle').value = 50;
        document.getElementById('dg-side-a').value = '';
        resBox.classList.add('hidden');
      });
    </script>

