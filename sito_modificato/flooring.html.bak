        const installPriceInput = document.getElementById("install-price");
        const materialPriceUnitLabel = document.getElementById(
          "material-price-unit-label"
        );
        const installPriceUnitLabel = document.getElementById(
          "install-price-unit-label"
        );

        const resultNetAreaEl = document.getElementById("result-net-area");
        const resultNetAreaUnitEl = document.getElementById(
          "result-net-area-unit"
        );
        const resultWasteAreaEl = document.getElementById("result-waste-area");
        const resultWasteAreaUnitEl = document.getElementById(
          "result-waste-area-unit"
        );
        const resultWastePercentEl = document.getElementById(
          "result-waste-percent"
        );
        const resultTotalAreaEl = document.getElementById("result-total-area");
        const resultTotalAreaUnitEl = document.getElementById(
          "result-total-area-unit"
        );
        const resultBoxesEl = document.getElementById("result-boxes");
        const resultExtraPiecesEl = document.getElementById(
          "result-extra-pieces"
        );
        const resultMaterialCostEl = document.getElementById(
          "result-material-cost"
        );
        const resultInstallCostEl = document.getElementById(
          "result-install-cost"
        );
        const resultTotalCostEl = document.getElementById("result-total-cost");

        const resetBtn = document.getElementById("reset-btn");

        let currentUnit = "ft"; // 'ft' or 'm'
        let soldMode = "box"; // 'box' or 'piece'
        let sectionIdCounter = 1;

        function createSection() {
          const id = sectionIdCounter++;
          const wrapper = document.createElement("div");
          wrapper.className = "border border-gray-200 rounded-md p-3";
          wrapper.dataset.sectionId = id;

          wrapper.innerHTML = `
        <div class="flex items-center justify-between mb-2">
          <span class="text-sm font-medium text-gray-700">Section ${id}</span>
          <button type="button" class="text-xs text-red-500 hover:text-red-700 remove-section-btn">Remove</button>
        </div>
        <div class="input-grid">
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">Length</label>
            <div class="flex">
              <input type="number" min="0" step="0.01" class="section-length flex-1 border border-gray-300 rounded-l-md px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Length">
              <span class="section-length-unit inline-flex items-center px-2 border border-l-0 border-gray-300 rounded-r-md text-xs bg-gray-50">${
                currentUnit === "ft" ? "ft" : "m"
              }</span>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-gray-700 mb-1">Width</label>
            <div class="flex">
              <input type="number" min="0" step="0.01" class="section-width flex-1 border border-gray-300 rounded-l-md px-2 py-1.5 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500" placeholder="Width">
              <span class="section-width-unit inline-flex items-center px-2 border border-l-0 border-gray-300 rounded-r-md text-xs bg-gray-50">${
                currentUnit === "ft" ? "ft" : "m"
              }</span>
            </div>
          </div>
        </div>
      `;

          sectionsContainer.appendChild(wrapper);
          attachSectionEvents(wrapper);
          updateAll();
        }

        function attachSectionEvents(sectionEl) {
          const lengthInput = sectionEl.querySelector(".section-length");
          const widthInput = sectionEl.querySelector(".section-width");
          const removeBtn = sectionEl.querySelector(".remove-section-btn");

          lengthInput.addEventListener("input", updateAll);
          widthInput.addEventListener("input", updateAll);
          removeBtn.addEventListener("click", () => {
            sectionEl.remove();
            updateAll();
          });
        }

        function getNetArea() {
          let total = 0;
          const sections =
            sectionsContainer.querySelectorAll("[data-section-id]");
          sections.forEach((sec) => {
            const length =
              parseFloat(sec.querySelector(".section-length").value) || 0;
            const width =
              parseFloat(sec.querySelector(".section-width").value) || 0;
            if (length > 0 && width > 0) {
              total += length * width;
            }
          });

          // Convert to square feet or square meters depending on unit
          if (currentUnit === "ft") {
            return total; // already sq ft
          } else {
            return total; // already m²
          }
        }

        function getWastePercent() {
          const val = wastePercentSelect.value;
          if (val === "custom") {
            const custom = parseFloat(customWasteInput.value);
            return isFinite(custom) && custom >= 0 ? custom : 0;
          }
          return parseFloat(val) || 0;
        }

        function getCoveragePerBox() {
          if (soldMode === "box") {
            const cov = parseFloat(boxCoverageInput.value);
            if (!isFinite(cov) || cov <= 0) return 0;
            return cov; // in sq ft or m² depending on unit
          } else {
            const len = parseFloat(pieceLengthInput.value);
            const wid = parseFloat(pieceWidthInput.value);
            const piecesPerBox = parseInt(piecesPerBoxPieceModeInput.value, 10);
            if (
              !isFinite(len) ||
              !isFinite(wid) ||
              !isFinite(piecesPerBox) ||
              len <= 0 ||
              wid <= 0 ||
              piecesPerBox <= 0
            ) {
              return 0;
            }
            let pieceArea;
            if (currentUnit === "ft") {
              // length and width are in inches; convert to feet
              const lenFt = len / 12;
              const widFt = wid / 12;
              pieceArea = lenFt * widFt; // sq ft
            } else {
              // length and width are in centimeters; convert to meters
              const lenM = len / 100;
              const widM = wid / 100;
              pieceArea = lenM * widM; // m²
            }
            return pieceArea * piecesPerBox;
          }
        }

        function updateUnits() {
          // Update labels
          totalNetAreaUnitEl.textContent =
            currentUnit === "ft" ? "sq ft" : "m²";
          resultNetAreaUnitEl.textContent =
            currentUnit === "ft" ? "sq ft" : "m²";
          resultWasteAreaUnitEl.textContent =
            currentUnit === "ft" ? "sq ft" : "m²";
          resultTotalAreaUnitEl.textContent =
            currentUnit === "ft" ? "sq ft" : "m²";
          boxCoverageUnit.textContent = currentUnit === "ft" ? "sq ft" : "m²";
          installPriceUnitLabel.textContent =
            currentUnit === "ft" ? "per sq ft" : "per m²";

          pieceLengthUnit.textContent = currentUnit === "ft" ? "in" : "cm";
          pieceWidthUnit.textContent = currentUnit === "ft" ? "in" : "cm";

          // Update section unit labels
          sectionsContainer
            .querySelectorAll(".section-length-unit")
            .forEach((el) => {
              el.textContent = currentUnit === "ft" ? "ft" : "m";
            });
          sectionsContainer
            .querySelectorAll(".section-width-unit")
            .forEach((el) => {
              el.textContent = currentUnit === "ft" ? "ft" : "m";
            });
        }

        function updateSoldModeUI() {
          if (soldMode === "box") {
            soldByBoxBtn.classList.add("toggle-btn-active");
            soldByBoxBtn.classList.remove("bg-white", "text-gray-700");
            soldByPieceBtn.classList.remove("toggle-btn-active");
            soldByPieceBtn.classList.add("bg-white", "text-gray-700");
            boxModeFields.classList.remove("hidden");
            pieceModeFields.classList.add("hidden");
            materialPriceUnitLabel.textContent = "per box";
          } else {
            soldByPieceBtn.classList.add("toggle-btn-active");
            soldByPieceBtn.classList.remove("bg-white", "text-gray-700");
            soldByBoxBtn.classList.remove("toggle-btn-active");
            soldByBoxBtn.classList.add("bg-white", "text-gray-700");
            boxModeFields.classList.add("hidden");
            pieceModeFields.classList.remove("hidden");
            materialPriceUnitLabel.textContent =
              currentUnit === "ft" ? "per sq ft" : "per m²";
          }
        }

        function updateWasteUI() {
          if (wastePercentSelect.value === "custom") {
            customWasteWrapper.classList.remove("hidden");
          } else {
            customWasteWrapper.classList.add("hidden");
          }
        }

        function updateAll() {
          const netArea = getNetArea();
          const wastePercent = getWastePercent();
          const wasteArea = netArea * (wastePercent / 100);
          const totalArea = netArea + wasteArea;

          totalNetAreaEl.textContent = formatNumber(netArea);
          resultNetAreaEl.textContent = formatNumber(netArea);
          resultWasteAreaEl.textContent = formatNumber(wasteArea);
          resultTotalAreaEl.textContent = formatNumber(totalArea);
          resultWastePercentEl.textContent = formatNumber(wastePercent, 1);

          const coveragePerBox = getCoveragePerBox();
          let boxesNeeded = 0;
          let extraPieces = 0;

          if (coveragePerBox > 0 && totalArea > 0) {
            boxesNeeded = Math.ceil(totalArea / coveragePerBox);
            // Estimate extra pieces from waste if we know pieces per box
            let piecesPerBox = 0;
            if (soldMode === "box") {
              piecesPerBox = parseInt(piecesPerBoxInput.value, 10) || 0;
            } else {
              piecesPerBox =
                parseInt(piecesPerBoxPieceModeInput.value, 10) || 0;
            }
            if (piecesPerBox > 0) {
              const totalPieces = boxesNeeded * piecesPerBox;
              const piecesForNetArea =
                (netArea / coveragePerBox) * piecesPerBox;
              extraPieces = Math.max(
                0,
                Math.round(totalPieces - piecesForNetArea)
              );
            }
          }

          resultBoxesEl.textContent = boxesNeeded.toString();
          resultExtraPiecesEl.textContent = extraPieces.toString();

          // Costs
          let materialCost = 0;
          const materialPrice = parseFloat(materialPriceInput.value);
          if (isFinite(materialPrice) && materialPrice > 0 && totalArea > 0) {
            if (soldMode === "box" && coveragePerBox > 0) {
              materialCost = boxesNeeded * materialPrice;
            } else {
              // price per area
              materialCost = totalArea * materialPrice;
            }
          }

          let installCost = 0;
          const installPrice = parseFloat(installPriceInput.value);
          if (isFinite(installPrice) && installPrice > 0 && totalArea > 0) {
            installCost = totalArea * installPrice;
          }

          const totalCost = materialCost + installCost;

          resultMaterialCostEl.textContent = formatCurrency(materialCost);
          resultInstallCostEl.textContent = formatCurrency(installCost);
          resultTotalCostEl.textContent = formatCurrency(totalCost);
        }

        // Event bindings
        unitFtBtn.addEventListener("click", () => {
          if (currentUnit === "ft") return;
          currentUnit = "ft";
          unitFtBtn.classList.add("toggle-btn-active");
          unitFtBtn.classList.remove("bg-white", "text-gray-700");
          unitMBtn.classList.remove("toggle-btn-active");
          unitMBtn.classList.add("bg-white", "text-gray-700");
          updateUnits();
          updateSoldModeUI();
          updateAll();
        });

        unitMBtn.addEventListener("click", () => {
          if (currentUnit === "m") return;
          currentUnit = "m";
          unitMBtn.classList.add("toggle-btn-active");
          unitMBtn.classList.remove("bg-white", "text-gray-700");
          unitFtBtn.classList.remove("toggle-btn-active");
          unitFtBtn.classList.add("bg-white", "text-gray-700");
          updateUnits();
          updateSoldModeUI();
          updateAll();
        });

        soldByBoxBtn.addEventListener("click", () => {
          if (soldMode === "box") return;
          soldMode = "box";
          updateSoldModeUI();
          updateAll();
        });

        soldByPieceBtn.addEventListener("click", () => {
          if (soldMode === "piece") return;
          soldMode = "piece";
          updateSoldModeUI();
          updateAll();
        });

        addSectionBtn.addEventListener("click", createSection);

        [
          boxCoverageInput,
          piecesPerBoxInput,
          pieceLengthInput,
          pieceWidthInput,
          piecesPerBoxPieceModeInput,
          materialPriceInput,
          installPriceInput,
        ].forEach((input) => {
          input.addEventListener("input", updateAll);
        });

        wastePercentSelect.addEventListener("change", () => {
          updateWasteUI();
          updateAll();
        });

        customWasteInput.addEventListener("input", updateAll);

        resetBtn.addEventListener("click", () => {
          // Clear sections
          sectionsContainer.innerHTML = "";
          sectionIdCounter = 1;
          createSection();

          // Reset inputs
          boxCoverageInput.value = "";
          piecesPerBoxInput.value = "";
          pieceLengthInput.value = "";
          pieceWidthInput.value = "";
          piecesPerBoxPieceModeInput.value = "";
          wastePercentSelect.value = "10";
          customWasteInput.value = "";
          materialPriceInput.value = "";
          installPriceInput.value = "";
          document.getElementById("pattern-select").value = "";

          soldMode = "box";
          updateSoldModeUI();
          updateWasteUI();
          updateAll();
        });

        // Initialize with one section
        createSection();
        updateUnits();
        updateSoldModeUI();
        updateWasteUI();
        updateAll();
      });
    </script>

