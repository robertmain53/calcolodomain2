    <script>
      // Utility conversions
      function cmToIn(cm) {
        return cm / 2.54;
      }
      function inToCm(inch) {
        return inch * 2.54;
      }

      function getUnitSystem() {
        return document.querySelector('input[name="unitSystem"]:checked').value;
      }

      function getRidingStyle() {
        return document.querySelector('input[name="ridingStyle"]:checked')
          .value;
      }

      function estimateInseamFromHeight(heightCm) {
        // Typical inseam ~ 0.45 of height
        return heightCm * 0.45;
      }

      function clamp(value, min, max) {
        return Math.min(Math.max(value, min), max);
      }

      function calculateBikeSize() {
        const unit = getUnitSystem();
        const bikeType =
          document.querySelector(".bike-type-tab.tab-active")?.dataset.type ||
          "road";

        let heightCm = null;
        let inseamCm = null;

        if (unit === "metric") {
          const h = parseFloat(document.getElementById("heightCm").value);
          const i = parseFloat(document.getElementById("inseamCm").value);
          if (!isNaN(h)) heightCm = h;
          if (!isNaN(i)) inseamCm = i;
        } else {
          const ft = parseFloat(document.getElementById("heightFt").value);
          const inch = parseFloat(document.getElementById("heightIn").value);
          const inseamIn = parseFloat(
            document.getElementById("inseamIn").value
          );
          if (!isNaN(ft) || !isNaN(inch)) {
            const totalIn =
              (isNaN(ft) ? 0 : ft * 12) + (isNaN(inch) ? 0 : inch);
            heightCm = inToCm(totalIn);
          }
          if (!isNaN(inseamIn)) inseamCm = inToCm(inseamIn);
        }

        if (!heightCm || heightCm < 120 || heightCm > 210) {
          alert(
            "Please enter a realistic height (approx. 120–210 cm / 4–7 ft)."
          );
          return;
        }

        if (!inseamCm) {
          inseamCm = estimateInseamFromHeight(heightCm);
        }

        const style = getRidingStyle();
        let frameSizeCm = null;
        let frameSizeIn = null;
        let label = "";
        let altText = "";
        let kidsWheel = null;

        // Base frame size by type
        if (bikeType === "road" || bikeType === "gravel") {
          frameSizeCm = inseamCm * 0.65;
          // Style adjustment
          if (style === "comfort") frameSizeCm -= 1.5;
          if (style === "sporty") frameSizeCm += 1.5;
          frameSizeCm = clamp(frameSizeCm, 47, 62);
          frameSizeIn = cmToIn(frameSizeCm);

          // Label
          if (frameSizeCm < 50) label = "XS";
          else if (frameSizeCm < 52) label = "S";
          else if (frameSizeCm < 54) label = "M";
          else if (frameSizeCm < 56) label = "M/L";
          else if (frameSizeCm < 58) label = "L";
          else if (frameSizeCm < 60) label = "XL";
          else label = "XXL";

          const lower = Math.round(frameSizeCm - 1);
          const upper = Math.round(frameSizeCm + 1);
          altText = `You will likely fit well on frames labeled around ${lower}–${upper} cm (${label}).`;
        } else if (bikeType === "mtb") {
          const baseIn = inseamCm * 0.23;
          frameSizeIn = baseIn;
          if (style === "comfort") frameSizeIn -= 0.5;
          if (style === "sporty") frameSizeIn += 0.5;
          frameSizeIn = clamp(frameSizeIn, 13, 21);
          frameSizeCm = inToCm(frameSizeIn);

          if (frameSizeIn < 14) label = "XS";
          else if (frameSizeIn < 16) label = "S";
          else if (frameSizeIn < 18) label = "M";
          else if (frameSizeIn < 20) label = "L";
          else label = "XL";

          const lower = Math.round(frameSizeIn - 0.5);
          const upper = Math.round(frameSizeIn + 0.5);
          altText = `Look for mountain bikes around ${lower}–${upper}" seat tube (${label}).`;
        } else if (bikeType === "hybrid") {
          frameSizeCm = inseamCm * 0.66;
          if (style === "comfort") frameSizeCm -= 1.5;
          if (style === "sporty") frameSizeCm += 1.5;
          frameSizeCm = clamp(frameSizeCm, 42, 62);
          frameSizeIn = cmToIn(frameSizeCm);

          if (frameSizeCm < 46) label = "XS";
          else if (frameSizeCm < 50) label = "S";
          else if (frameSizeCm < 54) label = "M";
          else if (frameSizeCm < 58) label = "L";
          else label = "XL";

          const lower = Math.round(frameSizeCm - 2);
          const upper = Math.round(frameSizeCm + 2);
          altText = `Hybrid / city bikes around ${lower}–${upper} cm (${label}) should fit well.`;
        } else if (bikeType === "kids") {
          // Kids: focus on wheel size
          const h = heightCm;
          if (h < 95) kidsWheel = 12;
          else if (h < 110) kidsWheel = 14;
          else if (h < 120) kidsWheel = 16;
          else if (h < 135) kidsWheel = 20;
          else if (h < 150) kidsWheel = 24;
          else kidsWheel = 26;

          // Approximate "frame size" as wheel size
          frameSizeCm = null;
          frameSizeIn = kidsWheel;
          label = kidsWheel + '" wheel';
          altText =
            "For kids, wheel size is more important than frame number. Ensure they can start and stop confidently.";

          const age = parseFloat(document.getElementById("childAge").value);
          const kidsWheelNote = document.getElementById("kidsWheelNote");
          if (!isNaN(age)) {
            let expected = null;
            if (age <= 3) expected = 12;
            else if (age <= 5) expected = 14;
            else if (age <= 6) expected = 16;
            else if (age <= 8) expected = 20;
            else if (age <= 11) expected = 24;
            else expected = 26;

            if (expected && expected !== kidsWheel) {
              kidsWheelNote.textContent = `By age, a ${expected}" wheel is typical, but height suggests ${kidsWheel}". Always prioritize how confidently your child can reach the ground and brakes.`;
            } else {
              kidsWheelNote.textContent = `Height and age are consistent with a ${kidsWheel}" wheel. Check standover and reach on the specific bike.`;
            }
          } else {
            kidsWheelNote.textContent =
              "Use height and inseam as your main guide, then check that your child can start, stop and turn comfortably.";
          }

          document.getElementById(
            "kidsWheelSize"
          ).textContent = `${kidsWheel}" wheel`;
          document.getElementById("kidsWheelBlock").classList.remove("hidden");
        } else {
          return;
        }

        // Hide kids wheel block if not kids
        if (bikeType !== "kids") {
          document.getElementById("kidsWheelBlock").classList.add("hidden");
        }

        // Compute saddle height (BB to saddle top)
        let saddleHeightCm = inseamCm * 0.883;
        if (bikeType === "mtb" || bikeType === "kids" || style === "comfort") {
          saddleHeightCm -= 1.0; // slightly lower for control
        }

        // Standover clearance estimate: inseam - frame standover
        let standoverClearanceCm = null;
        if (bikeType === "road" || bikeType === "gravel") {
          const standover = frameSizeCm + 2; // rough
          standoverClearanceCm = inseamCm - standover;
        } else if (bikeType === "mtb" || bikeType === "hybrid") {
          const standover = frameSizeCm - 5;
          standoverClearanceCm = inseamCm - standover;
        }

        // Reach suggestion (approximate)
        let reachCm = null;
        if (bikeType !== "kids") {
          reachCm =
            (heightCm *
              (style === "sporty" ? 0.47 : style === "comfort" ? 0.43 : 0.45)) /
            10;
        }

        // Populate UI
        const frameSizeMain = document.getElementById("frameSizeMain");
        const frameSizeAlt = document.getElementById("frameSizeAlt");
        const frameSizeLabel = document.getElementById("frameSizeLabel");
        const saddleHeightEl = document.getElementById("saddleHeight");
        const standoverEl = document.getElementById("standover");
        const reachEl = document.getElementById("reach");
        const fitNote = document.getElementById("fitNote");

        if (bikeType === "kids") {
          frameSizeMain.textContent = `${kidsWheel}" kids bike`;
          frameSizeAlt.textContent = altText;
          frameSizeLabel.textContent = "";
        } else {
          const sizeCmRounded = Math.round(frameSizeCm);
          const sizeInRounded = Math.round(frameSizeIn * 10) / 10;
          frameSizeMain.textContent = `${sizeCmRounded} cm (${sizeInRounded}" approx.)`;
          frameSizeAlt.textContent = altText;
          frameSizeLabel.textContent = `Suggested size label: ${label}`;
        }

        if (unit === "metric") {
          saddleHeightEl.textContent = `${Math.round(
            saddleHeightCm
          )} cm from BB to saddle top`;
          if (standoverClearanceCm !== null) {
            const clr = Math.round(standoverClearanceCm);
            const clrIn = Math.round(cmToIn(standoverClearanceCm) * 10) / 10;
            standoverEl.textContent = `${clr} cm (${clrIn}") clearance (positive is good)`;
          } else {
            standoverEl.textContent =
              "Depends on specific model; check manufacturer standover height.";
          }
          if (reachCm !== null) {
            const r = Math.round(reachCm * 10) / 10;
            reachEl.textContent = `${r} cm cockpit reach (saddle to bars, approximate)`;
          } else {
            reachEl.textContent =
              "Match reach to how stretched you feel on the bike.";
          }
        } else {
          const saddleIn = cmToIn(saddleHeightCm);
          saddleHeightEl.textContent = `${
            Math.round(saddleIn * 10) / 10
          }" from BB to saddle top`;
          if (standoverClearanceCm !== null) {
            const clrIn = cmToIn(standoverClearanceCm);
            standoverEl.textContent = `${
              Math.round(clrIn * 10) / 10
            }" clearance (positive is good)`;
          } else {
            standoverEl.textContent =
              "Depends on specific model; check manufacturer standover height.";
          }
          if (reachCm !== null) {
            const rIn = cmToIn(reachCm);
            reachEl.textContent = `${
              Math.round(rIn * 10) / 10
            }" cockpit reach (approximate)`;
          } else {
            reachEl.textContent =
              "Match reach to how stretched you feel on the bike.";
          }
        }

        fitNote.textContent =
          bikeType === "kids"
            ? "For kids, prioritize easy starting, stopping and confidence over long-term “room to grow”."
            : "Fine‑tune with stem length, saddle setback and bar height. If in doubt, a slightly smaller frame is easier to adjust.";

        document.getElementById("resultsSection").classList.remove("hidden");
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Tabs for bike type
        document.querySelectorAll(".bike-type-tab").forEach((btn) => {
          btn.addEventListener("click", () => {
            document
              .querySelectorAll(".bike-type-tab")
              .forEach((b) => b.classList.remove("tab-active"));
            btn.classList.add("tab-active");

            const type = btn.dataset.type;
            const kidsExtra = document.getElementById("kids-extra");
            if (type === "kids") kidsExtra.classList.remove("hidden");
            else kidsExtra.classList.add("hidden");
          });
        });

        // Unit switching
        document.querySelectorAll(".unit-radio").forEach((r) => {
          r.addEventListener("change", () => {
            const unit = getUnitSystem();
            const hMetric = document.getElementById("height-metric");
            const hImperial = document.getElementById("height-imperial");
            const iMetric = document.getElementById("inseam-metric");
            const iImperial = document.getElementById("inseam-imperial");

            if (unit === "metric") {
              hMetric.classList.remove("hidden");
              iMetric.classList.remove("hidden");
              hImperial.classList.add("hidden");
              iImperial.classList.add("hidden");
            } else {
              hMetric.classList.add("hidden");
              iMetric.classList.add("hidden");
              hImperial.classList.remove("hidden");
              iImperial.classList.remove("hidden");
            }
          });
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", calculateBikeSize);

        document.getElementById("resetBtn").addEventListener("click", () => {
          document.getElementById("bikeSizeForm").reset();
          document.getElementById("resultsSection").classList.add("hidden");
          // Reset tabs and kids section
          document.querySelectorAll(".bike-type-tab").forEach((b, idx) => {
            b.classList.toggle("tab-active", idx === 0);
          });
          document.getElementById("kids-extra").classList.add("hidden");
          // Ensure metric fields visible
          document.querySelector(
            'input[name="unitSystem"][value="metric"]'
          ).checked = true;
          document.getElementById("height-metric").classList.remove("hidden");
          document.getElementById("inseam-metric").classList.remove("hidden");
          document.getElementById("height-imperial").classList.add("hidden");
          document.getElementById("inseam-imperial").classList.add("hidden");
        });

        // Simple FAQ toggle (in addition to global script_faq if present)
        document.querySelectorAll("#faq .faq-question").forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const sign = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              sign.textContent = "−";
            }
          });
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
