    <script>
      // Property tax slider output
      const propertyTaxRateInput = document.getElementById("propertyTaxRate");
      const propertyTaxRateOutput = document.getElementById(
        "propertyTaxRateOutput"
      );
      function updatePropertyRateLabel() {
        propertyTaxRateOutput.textContent =
          parseFloat(propertyTaxRateInput.value).toFixed(2) + "%";
      }
      propertyTaxRateInput.addEventListener("input", updatePropertyRateLabel);
      updatePropertyRateLabel();

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString("en-US", { maximumFractionDigits: 0 })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getStandardDeduction(year, status) {
        // 2023 and 2024 standard deduction (approx; 2024 slightly higher)
        const table = {
          2023: { single: 13850, married: 27700, hoh: 20800 },
          2024: { single: 14600, married: 29200, hoh: 21900 },
        };
        const y = table[year] || table["2024"];
        if (status === "married") return y.married;
        if (status === "hoh") return y.hoh;
        return y.single;
      }

      function computeFederalTax(taxableIncome, year, status) {
        if (taxableIncome <= 0) return 0;

        // 2023 brackets (approx). For 2024 we reuse 2023 for simplicity.
        const brackets2023 = {
          single: [
            [0, 0.1],
            [11000, 0.12],
            [44725, 0.22],
            [95375, 0.24],
            [182100, 0.32],
            [231250, 0.35],
            [578125, 0.37],
          ],
          married: [
            [0, 0.1],
            [22000, 0.12],
            [89450, 0.22],
            [190750, 0.24],
            [364200, 0.32],
            [462500, 0.35],
            [693750, 0.37],
          ],
          hoh: [
            [0, 0.1],
            [15700, 0.12],
            [59850, 0.22],
            [95350, 0.24],
            [182100, 0.32],
            [231250, 0.35],
            [578100, 0.37],
          ],
        };
        const brackets = brackets2023[status] || brackets2023.single;

        let tax = 0;
        for (let i = 0; i < brackets.length; i++) {
          const [start, rate] = brackets[i];
          const nextStart =
            i + 1 < brackets.length ? brackets[i + 1][0] : Infinity;
          if (taxableIncome > start) {
            const amountInBracket = Math.min(taxableIncome, nextStart) - start;
            tax += amountInBracket * rate;
          } else {
            break;
          }
        }
        return tax;
      }

      function calculateTennesseeTaxes() {
        const filingStatus = document.getElementById("filingStatus").value;
        const taxYear = document.getElementById("taxYear").value;
        const wageIncome =
          parseFloat(document.getElementById("wageIncome").value) || 0;
        const interestDividends =
          parseFloat(document.getElementById("interestDividends").value) || 0;
        const otherIncome =
          parseFloat(document.getElementById("otherIncome").value) || 0;
        const countyRate =
          parseFloat(document.getElementById("county").value) || 9.25;
        const taxableSpending =
          parseFloat(document.getElementById("taxableSpending").value) || 0;
        const homeValue =
          parseFloat(document.getElementById("homeValue").value) || 0;
        const propertyRate =
          parseFloat(document.getElementById("propertyTaxRate").value) || 0.7;

        const totalIncome = wageIncome + interestDividends + otherIncome;

        // Tennessee state income tax (current years) = 0
        const tnIncomeTax = 0;

        // Sales tax
        const salesTax = taxableSpending * (countyRate / 100);

        // Property tax
        const propertyTax = homeValue * (propertyRate / 100);

        // Federal tax
        const agi = totalIncome;
        const stdDed = getStandardDeduction(taxYear, filingStatus);
        const taxableIncome = Math.max(0, agi - stdDed);
        const federalTax = computeFederalTax(
          taxableIncome,
          taxYear,
          filingStatus
        );

        const totalTax = tnIncomeTax + salesTax + propertyTax + federalTax;
        const effectiveRate =
          totalIncome > 0 ? (totalTax / totalIncome) * 100 : 0;

        document.getElementById("tnIncomeTax").textContent =
          formatCurrency(tnIncomeTax);
        document.getElementById("salesTax").textContent =
          formatCurrency(salesTax);
        document.getElementById("propertyTax").textContent =
          formatCurrency(propertyTax);
        document.getElementById("federalTax").textContent =
          formatCurrency(federalTax);
        document.getElementById("totalTax").textContent =
          formatCurrency(totalTax);
        document.getElementById("effectiveRate").textContent =
          formatPercent(effectiveRate);

        const breakdown = document.getElementById("breakdownDetails");
        breakdown.innerHTML = `
      <p><strong>Total income:</strong> ${formatCurrency(totalIncome)}</p>
      <p><strong>Adjusted gross income (AGI):</strong> ${formatCurrency(
        agi
      )}</p>
      <p><strong>Standard deduction (${taxYear}, ${filingStatus}):</strong> ${formatCurrency(
          stdDed
        )}</p>
      <p><strong>Federal taxable income:</strong> ${formatCurrency(
        taxableIncome
      )}</p>
      <p><strong>Federal income tax (estimated):</strong> ${formatCurrency(
        federalTax
      )}</p>
      <p><strong>Tennessee state income tax:</strong> ${formatCurrency(
        tnIncomeTax
      )} (no broad wage income tax)</p>
      <p><strong>Sales tax:</strong> ${formatCurrency(
        salesTax
      )} (rate: ${countyRate.toFixed(2)}%)</p>
      <p><strong>Property tax:</strong> ${formatCurrency(
        propertyTax
      )} (rate: ${propertyRate.toFixed(2)}% of home value)</p>
      <p><strong>Total tax:</strong> ${formatCurrency(totalTax)}</p>
      <p><strong>Effective total tax rate:</strong> ${formatPercent(
        effectiveRate
      )} of total income</p>
    `;
      }

      document
        .getElementById("calculateBtn")
        .addEventListener("click", calculateTennesseeTaxes);
      document.getElementById("resetBtn").addEventListener("click", () => {
        document.getElementById("filingStatus").value = "single";
        document.getElementById("taxYear").value = "2024";
        document.getElementById("wageIncome").value = 75000;
        document.getElementById("interestDividends").value = 2000;
        document.getElementById("otherIncome").value = 0;
        document.getElementById("county").selectedIndex = 0;
        document.getElementById("taxableSpending").value = 30000;
        document.getElementById("homeValue").value = 350000;
        document.getElementById("propertyTaxRate").value = 0.7;
        updatePropertyRateLabel();
        calculateTennesseeTaxes();
      });

      // Initial calculation on load
      window.addEventListener("DOMContentLoaded", calculateTennesseeTaxes);

      // Simple mobile menu toggle
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });
    </script>

