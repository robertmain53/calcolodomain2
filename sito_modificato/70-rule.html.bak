    <script>
      // Utility formatters
      function fmtMoney(value) {
        if (!isFinite(value)) return "$0";
        const abs = Math.abs(value);
        const sign = value < 0 ? "-" : "";
        return (
          sign +
          abs.toLocaleString(undefined, {
            style: "currency",
            currency: "USD",
            maximumFractionDigits: 0,
          })
        );
      }
      function fmtPercent(value) {
        if (!isFinite(value)) return "0%";
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      const arvEl = document.getElementById("arv");
      const rehabEl = document.getElementById("rehab");
      const baseFactorEl = document.getElementById("baseFactor");
      const baseFactorLabelEl = document.getElementById("baseFactorLabel");
      const holdingPctEl = document.getElementById("holdingPct");
      const buyingPctEl = document.getElementById("buyingPct");
      const sellingPctEl = document.getElementById("sellingPct");
      const profitPctEl = document.getElementById("profitPct");
      const profitFixedEl = document.getElementById("profitFixed");
      const profitModeEls = document.querySelectorAll(
        'input[name="profitMode"]'
      );
      const profitPercentRow = document.getElementById("profitPercentRow");
      const profitFixedRow = document.getElementById("profitFixedRow");

      const maoDisplayEl = document.getElementById("maoDisplay");
      const maoPercentOfArvEl = document.getElementById("maoPercentOfArv");
      const outArvEl = document.getElementById("outArv");
      const outRehabEl = document.getElementById("outRehab");
      const outHoldingEl = document.getElementById("outHolding");
      const outBuyingEl = document.getElementById("outBuying");
      const outSellingEl = document.getElementById("outSelling");
      const outTotalCostsEl = document.getElementById("outTotalCosts");
      const outProfitEl = document.getElementById("outProfit");
      const outProfitMarginEl = document.getElementById("outProfitMargin");
      const outRoiEl = document.getElementById("outRoi");
      const classic70El = document.getElementById("classic70");
      const errorEl = document.getElementById("calcError");
      const calcBtn = document.getElementById("calcBtn");

      // Sync base factor label
      baseFactorEl.addEventListener("input", () => {
        baseFactorLabelEl.textContent =
          Math.round(parseFloat(baseFactorEl.value) * 100) + "%";
      });

      // Profit mode toggle
      profitModeEls.forEach((radio) => {
        radio.addEventListener("change", () => {
          if (radio.checked && radio.value === "percent") {
            profitPercentRow.classList.remove("hidden");
            profitFixedRow.classList.add("hidden");
          } else if (radio.checked && radio.value === "fixed") {
            profitPercentRow.classList.add("hidden");
            profitFixedRow.classList.remove("hidden");
          }
        });
      });

      function getProfitMode() {
        let mode = "percent";
        profitModeEls.forEach((r) => {
          if (r.checked) mode = r.value;
        });
        return mode;
      }

      function calculate() {
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        const arv = parseFloat(arvEl.value);
        const rehab = parseFloat(rehabEl.value);

        if (!isFinite(arv) || arv <= 0) {
          errorEl.textContent = "Please enter a valid ARV greater than 0.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!isFinite(rehab) || rehab < 0) {
          errorEl.textContent =
            "Please enter a valid rehab cost (0 or higher).";
          errorEl.classList.remove("hidden");
          return;
        }

        const holdingPct =
          Math.max(0, parseFloat(holdingPctEl.value) || 0) / 100;
        const buyingPct = Math.max(0, parseFloat(buyingPctEl.value) || 0) / 100;
        const sellingPct =
          Math.max(0, parseFloat(sellingPctEl.value) || 0) / 100;

        let profitTarget = 0;
        const mode = getProfitMode();
        if (mode === "percent") {
          const p = Math.max(0, parseFloat(profitPctEl.value) || 0) / 100;
          profitTarget = arv * p;
        } else {
          profitTarget = Math.max(0, parseFloat(profitFixedEl.value) || 0);
        }

        const holding = arv * holdingPct;
        const buying = arv * buyingPct;
        const selling = arv * sellingPct;

        const mao = arv - rehab - holding - buying - selling - profitTarget;
        const maoClamped = Math.max(0, mao);

        const totalCosts = maoClamped + rehab + holding + buying + selling;
        const profit = Math.max(0, arv - totalCosts);
        const profitMargin = arv > 0 ? (profit / arv) * 100 : 0;
        const cashInvested = totalCosts; // simple approximation
        const roi = cashInvested > 0 ? (profit / cashInvested) * 100 : 0;

        // Classic 70% rule for comparison
        const classicMao = arv * 0.7 - rehab;

        // Update UI
        maoDisplayEl.textContent = fmtMoney(maoClamped);
        const maoPct = arv > 0 ? (maoClamped / arv) * 100 : 0;
        maoPercentOfArvEl.textContent = `${fmtPercent(maoPct)} of ARV`;

        outArvEl.textContent = fmtMoney(arv);
        outRehabEl.textContent = fmtMoney(rehab);
        outHoldingEl.textContent = fmtMoney(holding);
        outBuyingEl.textContent = fmtMoney(buying);
        outSellingEl.textContent = fmtMoney(selling);
        outTotalCostsEl.textContent = fmtMoney(totalCosts);
        outProfitEl.textContent = fmtMoney(profit);
        outProfitMarginEl.textContent = fmtPercent(profitMargin);
        outRoiEl.textContent = fmtPercent(roi);

        classic70El.textContent = `Classic MAO = 0.70 × ARV − Rehab = ${fmtMoney(
          classicMao
        )}`;
      }

      calcBtn.addEventListener("click", calculate);

      // Allow Enter key to trigger calculation from main inputs
      [
        arvEl,
        rehabEl,
        holdingPctEl,
        buyingPctEl,
        sellingPctEl,
        profitPctEl,
        profitFixedEl,
      ].forEach((el) => {
        el.addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            calculate();
          }
        });
      });
    </script>

