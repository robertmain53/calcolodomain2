<script>
  // Tab switching
  const tabStats = document.getElementById('tab-stats');
  const tabEvents = document.getElementById('tab-events');
  const panelStats = document.getElementById('panel-stats');
  const panelEvents = document.getElementById('panel-events');

  function activateTab(tab) {
    if (tab === 'stats') {
      tabStats.classList.add('border-blue-600', 'text-blue-600');
      tabStats.classList.remove('border-transparent', 'text-gray-600');
      tabEvents.classList.remove('border-blue-600', 'text-blue-600');
      tabEvents.classList.add('border-transparent', 'text-gray-600');
      panelStats.classList.remove('hidden');
      panelEvents.classList.add('hidden');
    } else {
      tabEvents.classList.add('border-blue-600', 'text-blue-600');
      tabEvents.classList.remove('border-transparent', 'text-gray-600');
      tabStats.classList.remove('border-blue-600', 'text-blue-600');
      tabStats.classList.add('border-transparent', 'text-gray-600');
      panelEvents.classList.remove('hidden');
      panelStats.classList.add('hidden');
    }
  }

  tabStats.addEventListener('click', () => activateTab('stats'));
  tabEvents.addEventListener('click', () => activateTab('events'));

  // Helper: OPS rating
  function getOpsRating(ops) {
    if (isNaN(ops)) return '';
    if (ops < 0.65) return 'Rating: Poor';
    if (ops < 0.72) return 'Rating: Below Average';
    if (ops < 0.76) return 'Rating: Average';
    if (ops < 0.84) return 'Rating: Above Average';
    if (ops < 0.9)  return 'Rating: Excellent';
    return 'Rating: Elite';
  }

  // Stats mode calculation
  const calcBtn = document.getElementById('calc-stats');
  const resetBtn = document.getElementById('reset-stats');
  const errorEl = document.getElementById('stats-error');

  function calculateFromStats() {
    errorEl.textContent = '';

    const pa = Number(document.getElementById('pa').value);
    const ab = Number(document.getElementById('ab').value);
    const h = Number(document.getElementById('hits').value);
    const doubles = Number(document.getElementById('doubles').value);
    const triples = Number(document.getElementById('triples').value);
    const hr = Number(document.getElementById('hr').value);
    const bb = Number(document.getElementById('bb').value);
    const hbp = Number(document.getElementById('hbp').value);
    const sf = Number(document.getElementById('sf').value);
    const sh = Number(document.getElementById('sh').value);

    if ([pa, ab, h, doubles, triples, hr, bb, hbp, sf, sh].some(v => v < 0 || !Number.isFinite(v))) {
      errorEl.textContent = 'All inputs must be non-negative numbers.';
      return;
    }

    if (h > ab) {
      errorEl.textContent = 'Hits (H) cannot exceed At-Bats (AB).';
      return;
    }

    if (doubles + triples + hr > h) {
      errorEl.textContent = '2B + 3B + HR cannot exceed total hits (H).';
      return;
    }

    const singles = h - doubles - triples - hr;
    const tb = singles + 2 * doubles + 3 * triples + 4 * hr;

    const obpDen = ab + bb + hbp + sf;
    const slgDen = ab;

    const obp = obpDen > 0 ? (h + bb + hbp) / obpDen : 0;
    const slg = slgDen > 0 ? tb / slgDen : 0;
    const ops = obp + slg;

    document.getElementById('obp-output').textContent = obp.toFixed(3);
    document.getElementById('slg-output').textContent = slg.toFixed(3);
    document.getElementById('ops-output').textContent = ops.toFixed(3);
    document.getElementById('ops-rating').textContent = getOpsRating(ops);
  }

  calcBtn.addEventListener('click', calculateFromStats);

  resetBtn.addEventListener('click', () => {
    document.getElementById('pa').value = 600;
    document.getElementById('ab').value = 550;
    document.getElementById('hits').value = 170;
    document.getElementById('doubles').value = 35;
    document.getElementById('triples').value = 5;
    document.getElementById('hr').value = 30;
    document.getElementById('bb').value = 60;
    document.getElementById('hbp').value = 5;
    document.getElementById('sf').value = 5;
    document.getElementById('sh').value = 0;
    document.getElementById('obp-output').textContent = '0.000';
    document.getElementById('slg-output').textContent = '0.000';
    document.getElementById('ops-output').textContent = '0.000';
    document.getElementById('ops-rating').textContent = '';
    errorEl.textContent = '';
  });

  // Events mode
  const eventsBody = document.getElementById('events-body');
  const addEventBtn = document.getElementById('add-event');
  const clearEventsBtn = document.getElementById('clear-events');
  const eventTypeSelect = document.getElementById('event-type');

  let events = [];

  function updateEventsStats() {
    let pa = events.length;
    let ab = 0, h = 0, bb = 0, hbp = 0, sf = 0, sh = 0;
    let singles = 0, doubles = 0, triples = 0, hr = 0;

    events.forEach(e => {
      switch (e) {
        case '1B':
          ab++; h++; singles++; break;
        case '2B':
          ab++; h++; doubles++; break;
        case '3B':
          ab++; h++; triples++; break;
        case 'HR':
          ab++; h++; hr++; break;
        case 'OUT':
          ab++; break;
        case 'BB':
          bb++; break;
        case 'HBP':
          hbp++; break;
        case 'SF':
          sf++; break;
        case 'SH':
          sh++; break;
      }
    });

    const tb = singles + 2 * doubles + 3 * triples + 4 * hr;
    const obpDen = ab + bb + hbp + sf;
    const slgDen = ab;

    const obp = obpDen > 0 ? (h + bb + hbp) / obpDen : 0;
    const slg = slgDen > 0 ? tb / slgDen : 0;
    const ops = obp + slg;

    document.getElementById('ev-pa').textContent = pa;
    document.getElementById('ev-ab').textContent = ab;
    document.getElementById('ev-h').textContent = h;
    document.getElementById('ev-bb').textContent = bb;
    document.getElementById('ev-2b').textContent = doubles;
    document.getElementById('ev-3b').textContent = triples;
    document.getElementById('ev-hr').textContent = hr;
    document.getElementById('ev-hbp').textContent = hbp;
    document.getElementById('ev-sf').textContent = sf;
    document.getElementById('ev-sh').textContent = sh;
    document.getElementById('ev-tb').textContent = tb;

    document.getElementById('ev-obp').textContent = obp.toFixed(3);
    document.getElementById('ev-slg').textContent = slg.toFixed(3);
    document.getElementById('ev-ops').textContent = ops.toFixed(3);
    document.getElementById('ev-ops-rating').textContent = getOpsRating(ops);
  }

  function renderEventsTable() {
    eventsBody.innerHTML = '';
    events.forEach((e, idx) => {
      const tr = document.createElement('tr');
      tr.className = idx % 2 === 0 ? 'bg-white' : 'bg-gray-50';
      const tdIndex = document.createElement('td');
      tdIndex.className = 'px-3 py-1 text-gray-700';
      tdIndex.textContent = idx + 1;
      const tdEvent = document.createElement('td');
      tdEvent.className = 'px-3 py-1 text-gray-700';
      tdEvent.textContent = e;
      tr.appendChild(tdIndex);
      tr.appendChild(tdEvent);
      eventsBody.appendChild(tr);
    });
  }

  addEventBtn.addEventListener('click', () => {
    const val = eventTypeSelect.value;
    events.push(val);
    renderEventsTable();
    updateEventsStats();
  });

  clearEventsBtn.addEventListener('click', () => {
    events = [];
    renderEventsTable();
    updateEventsStats();
  });

  // Initial calculation with default stats
  calculateFromStats();
</script>

