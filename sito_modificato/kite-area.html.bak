    <script>
      (function () {
        function $(id) {
          return document.getElementById(id);
        }
        function show(el) {
          el && el.classList.remove("hidden");
        }
        function hide(el) {
          el && el.classList.add("hidden");
        }

        // Mobile menu
        var toggle = document.getElementById("mobile-menu-toggle");
        var mobileMenu = document.getElementById("mobile-menu");
        if (toggle && mobileMenu) {
          toggle.addEventListener("click", function () {
            var isHidden = mobileMenu.classList.contains("hidden");
            if (isHidden) {
              mobileMenu.classList.remove("hidden");
              toggle.setAttribute("aria-expanded", "true");
            } else {
              mobileMenu.classList.add("hidden");
              toggle.setAttribute("aria-expanded", "false");
            }
          });
        }

        // Tabs
        var tabButtons = document.querySelectorAll(
          ".tab-button[data-kite-tab]"
        );
        var diagonalsPanel = $("kite-diagonals-panel");
        var sidesPanel = $("kite-sides-angle-panel");

        function activateTab(tab) {
          tabButtons.forEach(function (btn) {
            var t = btn.getAttribute("data-kite-tab");
            if (t === tab) btn.classList.add("active");
            else btn.classList.remove("active");
          });
          if (tab === "diagonals") {
            show(diagonalsPanel);
            hide(sidesPanel);
          } else {
            hide(diagonalsPanel);
            show(sidesPanel);
          }
        }

        tabButtons.forEach(function (btn) {
          btn.addEventListener("click", function () {
            var t = btn.getAttribute("data-kite-tab");
            activateTab(t);
          });
        });

        // Basic numeric parsing
        function parsePositiveNumber(value, name) {
          var s = String(value || "").trim();
          if (!s) return { ok: false, error: name + " is empty." };
          if (!/^[+]?(?:\d+(?:\.\d*)?|\.\d+)$/.test(s)) {
            return {
              ok: false,
              error: name + " must be a positive number (integer or decimal).",
            };
          }
          var n = Number(s);
          if (!Number.isFinite(n) || n <= 0) {
            return { ok: false, error: name + " must be greater than 0." };
          }
          return { ok: true, value: n };
        }

        function parseAngle(value) {
          var s = String(value || "").trim();
          if (!s) return { ok: false, error: "Angle θ is empty." };
          if (!/^[+-]?(?:\d+(?:\.\d*)?|\.\d+)$/.test(s)) {
            return { ok: false, error: "Angle θ must be a number in degrees." };
          }
          var n = Number(s);
          if (!Number.isFinite(n)) {
            return { ok: false, error: "Angle θ is not a finite number." };
          }
          if (n <= 0 || n >= 180) {
            return {
              ok: false,
              error:
                "Angle θ must be between 0° and 180° (not inclusive) for a valid kite interior angle.",
            };
          }
          return { ok: true, value: n };
        }

        // Diagonals mode
        var diagForm = $("kite-diagonals-form");
        var d1Input = $("kite-d1");
        var d2Input = $("kite-d2");
        var unitInput = $("kite-unit");
        var diagError = $("kite-diagonals-error");
        var diagResults = $("kite-diagonals-results");
        var diagMain = $("kite-diagonals-main");
        var diagSteps = $("kite-diagonals-steps");
        var diagReset = $("kite-diagonals-reset");

        function handleDiagSubmit(e) {
          e.preventDefault();
          hide(diagError);
          hide(diagResults);
          diagMain.innerHTML = "";
          diagSteps.textContent = "";

          var p1 = parsePositiveNumber(d1Input.value, "Diagonal d1");
          if (!p1.ok) {
            diagError.textContent = p1.error;
            show(diagError);
            return;
          }
          var p2 = parsePositiveNumber(d2Input.value, "Diagonal d2");
          if (!p2.ok) {
            diagError.textContent = p2.error;
            show(diagError);
            return;
          }
          var d1 = p1.value;
          var d2 = p2.value;
          var unit = (unitInput.value || "").trim();
          var unitSq = unit ? unit + "²" : "square units";

          var area = 0.5 * d1 * d2;

          diagMain.innerHTML =
            "Using the diagonal formula A = d₁·d₂ / 2, with " +
            '<span class="vector-pill">d₁ = ' +
            d1 +
            (unit ? " " + unit : "") +
            "</span>" +
            '<span class="vector-pill">d₂ = ' +
            d2 +
            (unit ? " " + unit : "") +
            "</span>" +
            " the area is <strong>" +
            area +
            " " +
            unitSq +
            "</strong>.";

          diagSteps.textContent =
            "Step: multiply the two diagonals (d₁·d₂ = " +
            d1 * d2 +
            "), then divide by 2 to obtain A = " +
            area +
            " " +
            unitSq +
            ".";

          show(diagResults);
        }

        function handleDiagReset() {
          d1Input.value = "8";
          d2Input.value = "6";
          unitInput.value = "cm";
          hide(diagError);
          hide(diagResults);
          diagMain.innerHTML = "";
          diagSteps.textContent = "";
        }

        if (diagForm) diagForm.addEventListener("submit", handleDiagSubmit);
        if (diagReset) diagReset.addEventListener("click", handleDiagReset);

        // Sides & angle mode
        var saForm = $("kite-sides-angle-form");
        var aInput = $("kite-a");
        var bInput = $("kite-b");
        var thetaInput = $("kite-theta");
        var saError = $("kite-sides-angle-error");
        var saResults = $("kite-sides-angle-results");
        var saMain = $("kite-sides-angle-main");
        var saSteps = $("kite-sides-angle-steps");
        var saReset = $("kite-sides-angle-reset");

        function handleSaSubmit(e) {
          e.preventDefault();
          hide(saError);
          hide(saResults);
          saMain.innerHTML = "";
          saSteps.textContent = "";

          var pa = parsePositiveNumber(aInput.value, "Side a");
          if (!pa.ok) {
            saError.textContent = pa.error;
            show(saError);
            return;
          }
          var pb = parsePositiveNumber(bInput.value, "Side b");
          if (!pb.ok) {
            saError.textContent = pb.error;
            show(saError);
            return;
          }
          var pt = parseAngle(thetaInput.value);
          if (!pt.ok) {
            saError.textContent = pt.error;
            show(saError);
            return;
          }

          var a = pa.value;
          var b = pb.value;
          var thetaDeg = pt.value;
          var thetaRad = (thetaDeg * Math.PI) / 180;
          var sinTheta = Math.sin(thetaRad);
          var area = a * b * sinTheta;

          saMain.innerHTML =
            "Using the side–angle formula A = a·b·sin(θ), with " +
            '<span class="vector-pill">a = ' +
            a +
            "</span>" +
            '<span class="vector-pill">b = ' +
            b +
            "</span>" +
            '<span class="vector-pill">θ = ' +
            thetaDeg +
            "°</span>" +
            ", the area is approximately <strong>" +
            area +
            " square units</strong>.";

          saSteps.textContent =
            "Step: convert θ to radians, compute sin(θ) ≈ " +
            sinTheta.toFixed(4) +
            ", then multiply a·b·sin(θ) = " +
            a +
            "·" +
            b +
            "·" +
            sinTheta.toFixed(4) +
            " ≈ " +
            area +
            ".";

          show(saResults);
        }

        function handleSaReset() {
          aInput.value = "5";
          bInput.value = "4";
          thetaInput.value = "60";
          hide(saError);
          hide(saResults);
          saMain.innerHTML = "";
          saSteps.textContent = "";
        }

        if (saForm) saForm.addEventListener("submit", handleSaSubmit);
        if (saReset) saReset.addEventListener("click", handleSaReset);

        // Quick examples
        document
          .querySelectorAll(".chip-button[data-kite-example]")
          .forEach(function (chip) {
            chip.addEventListener("click", function () {
              var spec = chip.getAttribute("data-kite-example") || "";
              if (spec.startsWith("diagonals:")) {
                activateTab("diagonals");
                var parts = spec.replace("diagonals:", "").split(",");
                d1Input.value = (parts[0] || "").trim();
                d2Input.value = (parts[1] || "").trim();
                unitInput.value = (parts[2] || "").trim();
                diagForm.dispatchEvent(new Event("submit"));
              } else if (spec.startsWith("sides:")) {
                activateTab("sides-angle");
                var sp = spec.replace("sides:", "").split(",");
                aInput.value = (sp[0] || "").trim();
                bInput.value = (sp[1] || "").trim();
                thetaInput.value = (sp[2] || "").trim();
                saForm.dispatchEvent(new Event("submit"));
              }
            });
          });

        // Default active tab
        activateTab("diagonals");

        if (window.MathJax && window.MathJax.typesetPromise) {
          window.MathJax.typesetPromise();
        }
      })();
    </script>
  
