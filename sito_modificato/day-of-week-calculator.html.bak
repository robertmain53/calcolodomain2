    <script>
      // Utility: pad number
      function pad2(n) {
        return n.toString().padStart(2, "0");
      }

      // Get today's date as yyyy-mm-dd
      function getTodayISO(tzMode) {
        const now = new Date();
        if (tzMode === "utc") {
          return now.toISOString().slice(0, 10);
        }
        // local date
        const y = now.getFullYear();
        const m = pad2(now.getMonth() + 1);
        const d = pad2(now.getDate());
        return y + "-" + m + "-" + d;
      }

      // Parse yyyy-mm-dd to {y,m,d}
      function parseISODate(str) {
        if (!str || !/^\d{4}-\d{2}-\d{2}$/.test(str)) return null;
        const y = parseInt(str.slice(0, 4), 10);
        const m = parseInt(str.slice(5, 7), 10);
        const d = parseInt(str.slice(8, 10), 10);
        if (y < 1 || y > 9999 || m < 1 || m > 12 || d < 1 || d > 31)
          return null;
        return { y, m, d };
      }

      // Check if Gregorian leap year
      function isLeapGregorian(y) {
        return (y % 4 === 0 && y % 100 !== 0) || y % 400 === 0;
      }

      // Days in month for Gregorian calendar
      function daysInMonthGregorian(y, m) {
        return [
          31,
          isLeapGregorian(y) ? 29 : 28,
          31,
          30,
          31,
          30,
          31,
          31,
          30,
          31,
          30,
          31,
        ][m - 1];
      }

      // Zeller's congruence for Gregorian: returns 0=Saturday,...,6=Friday
      function zellerGregorian(y, m, d) {
        if (m < 3) {
          m += 12;
          y -= 1;
        }
        const K = y % 100;
        const J = Math.floor(y / 100);
        const h =
          (d +
            Math.floor((13 * (m + 1)) / 5) +
            K +
            Math.floor(K / 4) +
            Math.floor(J / 4) +
            5 * J) %
          7;
        return h;
      }

      // Zeller's congruence for Julian: returns 0=Saturday,...,6=Friday
      function zellerJulian(y, m, d) {
        if (m < 3) {
          m += 12;
          y -= 1;
        }
        const K = y % 100;
        const J = Math.floor(y / 100);
        const h =
          (d +
            Math.floor((13 * (m + 1)) / 5) +
            K +
            Math.floor(K / 4) +
            5 -
            J * 2) %
          7;
        return (h + 7) % 7;
      }

      // Map Zeller (0=Sat,...,6=Fri) to Monday=0,...,Sunday=6
      function zellerToMondayIndex(h) {
        // h: 0=Sat,1=Sun,2=Mon,3=Tue,4=Wed,5=Thu,6=Fri
        // We want: 0=Mon,...,6=Sun
        const map = { 2: 0, 3: 1, 4: 2, 5: 3, 6: 4, 0: 5, 1: 6 };
        return map[h];
      }

      const weekdayNames = [
        "Monday",
        "Tuesday",
        "Wednesday",
        "Thursday",
        "Friday",
        "Saturday",
        "Sunday",
      ];

      // ISO week number
      function isoWeekNumber(y, m, d) {
        const date = new Date(Date.UTC(y, m - 1, d));
        // Thursday in current week decides the year
        date.setUTCDate(date.getUTCDate() + 4 - (date.getUTCDay() || 7));
        const yearStart = new Date(Date.UTC(date.getUTCFullYear(), 0, 1));
        const weekNo = Math.ceil(((date - yearStart) / 86400000 + 1) / 7);
        return weekNo;
      }

      // Difference in days from today (local)
      function diffFromToday(y, m, d) {
        const today = new Date();
        const target = new Date(y, m - 1, d);
        const msPerDay = 24 * 60 * 60 * 1000;
        const diff = Math.round(
          (target -
            new Date(today.getFullYear(), today.getMonth(), today.getDate())) /
            msPerDay
        );
        return diff;
      }

      function formatDiffText(diff) {
        if (diff === 0) return "Today";
        const abs = Math.abs(diff);
        const unit = abs === 1 ? "day" : "days";
        if (diff > 0) return `In ${abs} ${unit}`;
        return `${abs} ${unit} ago`;
      }

      function formatFullDate(y, m, d) {
        const date = new Date(y, m - 1, d);
        const formatter = new Intl.DateTimeFormat(undefined, {
          weekday: "long",
          year: "numeric",
          month: "long",
          day: "numeric",
        });
        return formatter.format(date);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const dateInput = document.getElementById("date-input");
        const btnToday = document.getElementById("btn-today");
        const btnYesterday = document.getElementById("btn-yesterday");
        const btnTomorrow = document.getElementById("btn-tomorrow");
        const calendarSelect = document.getElementById("calendar-system");
        const tzSelect = document.getElementById("timezone-select");
        const calcBtn = document.getElementById("calculate-btn");
        const errorEl = document.getElementById("error-message");
        const weekdayBadge = document.getElementById("weekday-badge");
        const fullDateOutput = document.getElementById("full-date-output");
        const diffOutput = document.getElementById("difference-output");
        const weekNumberOutput = document.getElementById("week-number-output");

        const monthSelect = document.getElementById("month-select");
        const yearInput = document.getElementById("year-input");
        const weekdaySelect = document.getElementById("weekday-select");
        const listDatesBtn = document.getElementById("list-dates-btn");
        const reverseErrorEl = document.getElementById("reverse-error-message");
        const matchingList = document.getElementById("matching-dates-list");

        // Initialize defaults
        const todayISO = getTodayISO("local");
        dateInput.value = todayISO;
        const todayObj = parseISODate(todayISO);
        if (todayObj) {
          yearInput.value = todayObj.y;
          monthSelect.value = String(todayObj.m - 1);
        }

        function calculateMain() {
          errorEl.classList.add("hidden");
          const iso = dateInput.value;
          const parsed = parseISODate(iso);
          if (!parsed) {
            errorEl.textContent = "Please enter a valid date.";
            errorEl.classList.remove("hidden");
            return;
          }
          const { y, m, d } = parsed;

          // Basic range & day check
          const maxDay = daysInMonthGregorian(y, m);
          if (d > maxDay) {
            errorEl.textContent = `Invalid date: ${y}-${pad2(m)}-${pad2(
              d
            )} does not exist in the Gregorian calendar.`;
            errorEl.classList.remove("hidden");
            return;
          }

          const calendar = calendarSelect.value;
          let h;
          if (calendar === "gregorian") {
            h = zellerGregorian(y, m, d);
          } else {
            h = zellerJulian(y, m, d);
          }
          const mondayIndex = zellerToMondayIndex(h);
          const weekdayName = weekdayNames[mondayIndex];

          weekdayBadge.textContent = weekdayName;
          fullDateOutput.textContent = formatFullDate(y, m, d);
          diffOutput.textContent = formatDiffText(diffFromToday(y, m, d));
          weekNumberOutput.textContent = "Week " + isoWeekNumber(y, m, d);
        }

        calcBtn.addEventListener("click", calculateMain);
        dateInput.addEventListener("change", calculateMain);

        btnToday.addEventListener("click", function () {
          const iso = getTodayISO(tzSelect.value);
          dateInput.value = iso;
          calculateMain();
        });

        btnYesterday.addEventListener("click", function () {
          const today = new Date();
          today.setDate(today.getDate() - 1);
          const iso = today.toISOString().slice(0, 10);
          dateInput.value = iso;
          calculateMain();
        });

        btnTomorrow.addEventListener("click", function () {
          const today = new Date();
          today.setDate(today.getDate() + 1);
          const iso = today.toISOString().slice(0, 10);
          dateInput.value = iso;
          calculateMain();
        });

        // Reverse lookup: list all dates in month/year with given weekday
        function listMatchingDates() {
          reverseErrorEl.classList.add("hidden");
          matchingList.innerHTML = "";

          const month = parseInt(monthSelect.value, 10); // 0-11
          const year = parseInt(yearInput.value, 10);
          const targetWeekday = parseInt(weekdaySelect.value, 10);

          if (!year || year < 1 || year > 9999) {
            reverseErrorEl.textContent =
              "Please enter a valid year between 1 and 9999.";
            reverseErrorEl.classList.remove("hidden");
            return;
          }

          const daysInMonth = daysInMonthGregorian(year, month + 1);
          const calendar = calendarSelect.value;
          const items = [];

          for (let day = 1; day <= daysInMonth; day++) {
            let h;
            if (calendar === "gregorian") {
              h = zellerGregorian(year, month + 1, day);
            } else {
              h = zellerJulian(year, month + 1, day);
            }
            const mondayIndex = zellerToMondayIndex(h);
            if (mondayIndex === targetWeekday) {
              const dateStr = `${year}-${pad2(month + 1)}-${pad2(day)}`;
              const label = formatFullDate(year, month + 1, day);
              items.push({ dateStr, label });
            }
          }

          if (items.length === 0) {
            const li = document.createElement("li");
            li.textContent =
              "No matching dates found for this month and weekday.";
            li.className = "text-gray-500";
            matchingList.appendChild(li);
            return;
          }

          items.forEach((item) => {
            const li = document.createElement("li");
            li.textContent = item.label;
            matchingList.appendChild(li);
          });
        }

        listDatesBtn.addEventListener("click", listMatchingDates);

        // Initial calculation
        calculateMain();
      });
    </script>

