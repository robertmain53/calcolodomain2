      // Simple Chart.js-free line plotting using canvas
      function drawDecayChart(ctx, dataPoints, maxTime) {
        const canvas = ctx.canvas;
        const width = canvas.width;
        const height = canvas.height;
        const padding = 40;

        const xs = dataPoints.map((p) => p.t);
        const ys = dataPoints.map((p) => p.f);

        const tMin = 0;
        const tMax = maxTime || Math.max(...xs, 1);
        const yMin = 0;
        const yMax = 1;

        const toX = (t) =>
          padding + ((t - tMin) / (tMax - tMin)) * (width - 2 * padding);
        const toY = (y) =>
          height -
          padding -
          ((y - yMin) / (yMax - yMin)) * (height - 2 * padding);

        ctx.clearRect(0, 0, width, height);

        ctx.strokeStyle = "#e5e7eb";
        ctx.lineWidth = 1;
        ctx.beginPath();
        ctx.moveTo(padding, padding);
        ctx.lineTo(padding, height - padding);
        ctx.lineTo(width - padding, height - padding);
        ctx.stroke();

        ctx.fillStyle = "#6b7280";
        ctx.font = "10px Inter, system-ui, sans-serif";
        ctx.textAlign = "center";
        ctx.fillText("Time (t)", width / 2, height - 8);
        ctx.save();
        ctx.translate(12, height / 2);
        ctx.rotate(-Math.PI / 2);
        ctx.fillText("Fraction remaining N(t)/N₀", 0, 0);
        ctx.restore();

        ctx.textAlign = "right";
        ctx.fillText("1.0", padding - 4, toY(1) + 3);
        ctx.fillText("0.5", padding - 4, toY(0.5) + 3);
        ctx.fillText("0", padding - 4, toY(0) + 3);

        ctx.strokeStyle = "#2563eb";
        ctx.lineWidth = 2;
        ctx.beginPath();
        dataPoints.forEach((p, i) => {
          const x = toX(p.t);
          const y = toY(p.f);
          if (i === 0) ctx.moveTo(x, y);
          else ctx.lineTo(x, y);
        });
        ctx.stroke();
      }

      document.addEventListener("DOMContentLoaded", () => {
        const modeTabs = document.querySelectorAll(".mode-tab");
        const form = document.getElementById("halfLifeForm");
        const percentRemainingInput =
          document.getElementById("percentRemaining");
        const percentRemainingOutput = document.getElementById(
          "percentRemainingOutput"
        );
        const calculateBtn = document.getElementById("calculateBtn");
        const resultsSection = document.getElementById("resultsSection");

        const primaryResultLabel =
          document.getElementById("primaryResultLabel");
        const primaryResultValue =
          document.getElementById("primaryResultValue");
        const modeBadge = document.getElementById("modeBadge");
        const halfLivesElapsed = document.getElementById("halfLivesElapsed");
        const decayConstant = document.getElementById("decayConstant");
        const fractionRemaining = document.getElementById("fractionRemaining");
        const percentRemainingResult = document.getElementById(
          "percentRemainingResult"
        );
        const timeHint = document.getElementById("timeHint");
        const halfLifeInputRow = document.getElementById("halfLifeInputRow");

        const initialAmount = document.getElementById("initialAmount");
        const remainingAmount = document.getElementById("remainingAmount");
        const timeValue = document.getElementById("timeValue");
        const timeUnit = document.getElementById("timeUnit");
        const halfLifeValue = document.getElementById("halfLifeValue");
        const halfLifeUnit = document.getElementById("halfLifeUnit");

        const decayCanvas = document.getElementById("decayChart");
        const decayCtx = decayCanvas.getContext("2d");

        let currentMode = "remaining";

        function unitToSeconds(value, unit) {
          const v = parseFloat(value);
          if (!isFinite(v) || v <= 0) return NaN;
          switch (unit) {
            case "s":
              return v;
            case "min":
              return v * 60;
            case "h":
              return v * 3600;
            case "d":
              return v * 86400;
            case "y":
              return v * 31557600; // average year
            default:
              return NaN;
          }
        }

        function secondsToUnit(seconds, unit) {
          switch (unit) {
            case "s":
              return seconds;
            case "min":
              return seconds / 60;
            case "h":
              return seconds / 3600;
            case "d":
              return seconds / 86400;
            case "y":
              return seconds / 31557600;
            default:
              return seconds;
          }
        }

        function updateModeUI() {
          modeTabs.forEach((tab) => {
            if (tab.dataset.mode === currentMode) {
              tab.classList.add("tab-active");
              tab.classList.remove("text-gray-500");
            } else {
              tab.classList.remove("tab-active");
              tab.classList.add("text-gray-500");
            }
          });

          if (currentMode === "remaining") {
            primaryResultLabel.textContent = "Remaining amount N(t)";
            modeBadge.textContent = "Remaining";
            timeHint.textContent =
              "Enter the elapsed time t. The calculator will compute the remaining amount.";
            halfLifeInputRow.classList.remove("hidden");
          } else if (currentMode === "time") {
            primaryResultLabel.textContent = "Elapsed time t";
            modeBadge.textContent = "Time";
            timeHint.textContent =
              "The calculator will compute the elapsed time t from N₀, N(t), and T₁⁄₂.";
            halfLifeInputRow.classList.remove("hidden");
          } else if (currentMode === "halfLife") {
            primaryResultLabel.textContent = "Half-life T₁⁄₂";
            modeBadge.textContent = "Half-life";
            timeHint.textContent =
              "Enter the elapsed time t. The calculator will compute the half-life from N₀ and N(t).";
            halfLifeInputRow.classList.remove("hidden");
          }
        }

        modeTabs.forEach((tab) => {
          tab.addEventListener("click", () => {
            currentMode = tab.dataset.mode;
            updateModeUI();
          });
        });

        percentRemainingInput.addEventListener("input", () => {
          percentRemainingOutput.textContent =
            percentRemainingInput.value + "%";
        });

        function calculate() {
          const N0 = parseFloat(initialAmount.value);
          const N = parseFloat(remainingAmount.value);
          const percent = parseFloat(percentRemainingInput.value);

          if (!isFinite(N0) || N0 <= 0) {
            alert("Please enter a valid positive initial amount N₀.");
            return;
          }

          let tSeconds = unitToSeconds(timeValue.value, timeUnit.value);
          let T12Seconds = unitToSeconds(
            halfLifeValue.value,
            halfLifeUnit.value
          );

          if (currentMode === "remaining") {
            if (!isFinite(tSeconds) || tSeconds < 0) {
              alert("Please enter a valid elapsed time t.");
              return;
            }
            if (!isFinite(T12Seconds) || T12Seconds <= 0) {
              alert("Please enter a valid positive half-life T₁⁄₂.");
              return;
            }
            const n = tSeconds / T12Seconds;
            const frac = Math.pow(0.5, n);
            const N_t = N0 * frac;
            const lambda = Math.log(2) / T12Seconds;

            primaryResultValue.textContent = N_t.toPrecision(6);
            halfLivesElapsed.textContent = n.toFixed(3);
            decayConstant.textContent = lambda.toExponential(6) + " 1/s";
            fractionRemaining.textContent = frac.toFixed(6);
            percentRemainingResult.textContent = (frac * 100).toFixed(3) + "%";

            const maxTime = Math.max(tSeconds, T12Seconds * 5);
            const points = [];
            const steps = 40;
            for (let i = 0; i <= steps; i++) {
              const tt = (maxTime * i) / steps;
              const ff = Math.pow(0.5, tt / T12Seconds);
              points.push({ t: tt, f: ff });
            }
            drawDecayChart(decayCtx, points, maxTime);
          } else if (currentMode === "time") {
            if (!isFinite(T12Seconds) || T12Seconds <= 0) {
              alert("Please enter a valid positive half-life T₁⁄₂.");
              return;
            }
            let N_used;
            if (isFinite(N) && N > 0) {
              N_used = N;
            } else {
              N_used = N0 * (percent / 100);
            }
            if (!isFinite(N_used) || N_used <= 0 || N_used >= N0) {
              alert(
                "Please enter a valid remaining amount or percentage (must be between 0 and N₀)."
              );
              return;
            }
            const frac = N_used / N0;
            const n = (Math.log(frac) / Math.log(0.5)) * -1; // positive
            const t = T12Seconds * n;
            const lambda = Math.log(2) / T12Seconds;

            primaryResultValue.textContent =
              secondsToUnit(t, timeUnit.value).toPrecision(6) +
              " " +
              timeUnit.value;
            halfLivesElapsed.textContent = n.toFixed(3);
            decayConstant.textContent = lambda.toExponential(6) + " 1/s";
            fractionRemaining.textContent = frac.toFixed(6);
            percentRemainingResult.textContent = (frac * 100).toFixed(3) + "%";

            const maxTime = Math.max(t, T12Seconds * 5);
            const points = [];
            const steps = 40;
            for (let i = 0; i <= steps; i++) {
              const tt = (maxTime * i) / steps;
              const ff = Math.pow(0.5, tt / T12Seconds);
              points.push({ t: tt, f: ff });
            }
            drawDecayChart(decayCtx, points, maxTime);
          } else if (currentMode === "halfLife") {
            if (!isFinite(tSeconds) || tSeconds <= 0) {
              alert("Please enter a valid positive elapsed time t.");
              return;
            }
            let N_used;
            if (isFinite(N) && N > 0) {
              N_used = N;
            } else {
              N_used = N0 * (percent / 100);
            }
            if (!isFinite(N_used) || N_used <= 0 || N_used >= N0) {
              alert(
                "Please enter a valid remaining amount or percentage (must be between 0 and N₀)."
              );
              return;
            }
            const ratio = N0 / N_used;
            const T12 = (tSeconds * Math.log(2)) / Math.log(ratio);
            const lambda = Math.log(2) / T12;
            const n = tSeconds / T12;
            const frac = N_used / N0;

            primaryResultValue.textContent =
              secondsToUnit(T12, halfLifeUnit.value).toPrecision(6) +
              " " +
              halfLifeUnit.value;
            halfLivesElapsed.textContent = n.toFixed(3);
            decayConstant.textContent = lambda.toExponential(6) + " 1/s";
            fractionRemaining.textContent = frac.toFixed(6);
            percentRemainingResult.textContent = (frac * 100).toFixed(3) + "%";

            const maxTime = Math.max(tSeconds, T12 * 5);
            const points = [];
            const steps = 40;
            for (let i = 0; i <= steps; i++) {
              const tt = (maxTime * i) / steps;
              const ff = Math.pow(0.5, tt / T12);
              points.push({ t: tt, f: ff });
            }
            drawDecayChart(decayCtx, points, maxTime);
          }

          resultsSection.classList.remove("hidden");
        }

        calculateBtn.addEventListener("click", calculate);
        updateModeUI();

        // Initialize chart with default values
        calculate();
      });
    </script>

