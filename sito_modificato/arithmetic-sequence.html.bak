    <script>
      // Arithmetic sequence calculator logic
      (function () {
        const a1Input = document.getElementById("a1");
        const dInput = document.getElementById("d");
        const nInput = document.getElementById("n");
        const calcBtn = document.getElementById("calc-btn");
        const errorEl = document.getElementById("calc-error");
        const anOutput = document.getElementById("an-output");
        const snOutput = document.getElementById("sn-output");
        const seqPreview = document.getElementById("sequence-preview");

        function formatNumber(value) {
          if (!isFinite(value)) return "–";
          const absVal = Math.abs(value);
          if (absVal !== 0 && (absVal < 1e-4 || absVal > 1e6)) {
            return value.toExponential(6);
          }
          return parseFloat(value.toFixed(6)).toString();
        }

        function calculate() {
          errorEl.classList.add("hidden");
          errorEl.textContent = "";

          const a1 = parseFloat(a1Input.value);
          const d = parseFloat(dInput.value);
          const nRaw = parseFloat(nInput.value);

          if (isNaN(a1) || isNaN(d) || isNaN(nRaw)) {
            errorEl.textContent =
              "Please enter values for a₁, d, and n before calculating.";
            errorEl.classList.remove("hidden");
            anOutput.textContent = "–";
            snOutput.textContent = "–";
            seqPreview.textContent = "–";
            return;
          }

          const n = Math.floor(nRaw);
          if (n <= 0 || !Number.isFinite(n)) {
            errorEl.textContent =
              "n must be a positive whole number (1, 2, 3, …).";
            errorEl.classList.remove("hidden");
            anOutput.textContent = "–";
            snOutput.textContent = "–";
            seqPreview.textContent = "–";
            return;
          }

          const an = a1 + (n - 1) * d;
          const sn = (n / 2) * (2 * a1 + (n - 1) * d);

          anOutput.textContent = formatNumber(an);
          snOutput.textContent = formatNumber(sn);

          const previewCount = Math.min(10, n);
          const terms = [];
          for (let i = 0; i < previewCount; i++) {
            terms.push(formatNumber(a1 + i * d));
          }
          if (n > 10) {
            terms.push("…");
          }
          seqPreview.textContent = terms.join(", ");
        }

        calcBtn.addEventListener("click", calculate);

        // Optional: live update on Enter key
        [a1Input, dInput, nInput].forEach((input) => {
          input.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              calculate();
            }
          });
        });
      })();

      (function () {
        const questions = document.querySelectorAll(
          "#faq-container .faq-question"
        );
        questions.forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              symbol.textContent = "−";
            }
          });
        });
      })();
    </script>

