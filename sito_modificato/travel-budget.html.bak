    <script>
      function parseNumber(id) {
        const v = parseFloat(
          document.getElementById(id).value.replace(",", ".")
        );
        return isNaN(v) ? 0 : v;
      }

      function formatCurrency(value, symbol) {
        const absVal = Math.abs(value);
        const formatted = absVal.toLocaleString(undefined, {
          maximumFractionDigits: 2,
          minimumFractionDigits: 2,
        });
        return (value < 0 ? "-" : "") + symbol + formatted;
      }

      function formatPercent(value) {
        return value.toFixed(1).replace(/\.0$/, "") + "%";
      }

      function calculateBudget() {
        const days = Math.max(
          1,
          parseInt(document.getElementById("trip-days").value, 10) || 1
        );
        const travelers = Math.max(
          1,
          parseInt(document.getElementById("travelers").value, 10) || 1
        );
        const currency =
          document.getElementById("currency-symbol").value || "$";
        const bufferPercent = Math.max(
          0,
          parseFloat(
            document.getElementById("buffer-percent").value.replace(",", ".")
          ) || 0
        );

        const oneTimeIds = [
          "cost-flights",
          "cost-accommodation-fixed",
          "cost-transport-fixed",
          "cost-visa",
          "cost-insurance",
          "cost-gear",
          "cost-activities-fixed",
          "cost-other-fixed",
        ];
        let oneTimeTotal = 0;
        oneTimeIds.forEach((id) => {
          oneTimeTotal += parseNumber(id);
        });

        const dailyPerPerson =
          parseNumber("daily-accommodation") +
          parseNumber("daily-food") +
          parseNumber("daily-transport") +
          parseNumber("daily-activities") +
          parseNumber("daily-misc") +
          parseNumber("daily-workspace");

        const dailyTotal = dailyPerPerson * days * travelers;
        const subtotal = oneTimeTotal + dailyTotal;
        const bufferAmount = subtotal * (bufferPercent / 100);
        const totalTrip = subtotal + bufferAmount;

        const perPerson = totalTrip / travelers;
        const perDayTrip = totalTrip / days;
        const perDayPerson = totalTrip / (days * travelers);

        const alreadySaved = parseNumber("already-saved");
        const monthsUntil = Math.max(
          1,
          parseInt(document.getElementById("months-until-trip").value, 10) || 1
        );
        const remainingToSave = Math.max(0, totalTrip - alreadySaved);
        const savePerMonth = remainingToSave / monthsUntil;
        const savePerWeek = (savePerMonth * 12) / 52;

        const oneTimeShare =
          subtotal > 0 ? (oneTimeTotal / totalTrip) * 100 : 0;
        const dailyShare = subtotal > 0 ? (dailyTotal / totalTrip) * 100 : 0;
        const bufferShare =
          totalTrip > 0 ? (bufferAmount / totalTrip) * 100 : 0;

        document.getElementById("res-one-time-total").textContent =
          formatCurrency(oneTimeTotal, currency);
        document.getElementById("res-daily-total").textContent = formatCurrency(
          dailyTotal,
          currency
        );
        document.getElementById("res-subtotal").textContent = formatCurrency(
          subtotal,
          currency
        );
        document.getElementById("res-buffer-amount").textContent =
          formatCurrency(bufferAmount, currency);
        document.getElementById("res-total-trip").textContent = formatCurrency(
          totalTrip,
          currency
        );

        document.getElementById("res-per-person").textContent = formatCurrency(
          perPerson,
          currency
        );
        document.getElementById("res-per-day-trip").textContent =
          formatCurrency(perDayTrip, currency);
        document.getElementById("res-per-day-person").textContent =
          formatCurrency(perDayPerson, currency);

        document.getElementById("res-already-saved").textContent =
          formatCurrency(alreadySaved, currency);
        document.getElementById("res-remaining-to-save").textContent =
          formatCurrency(remainingToSave, currency);
        document.getElementById("res-months").textContent =
          monthsUntil.toString();
        document.getElementById("res-save-per-month").textContent =
          formatCurrency(savePerMonth, currency);
        document.getElementById("res-save-per-week").textContent =
          formatCurrency(savePerWeek, currency);

        document.getElementById("res-one-time-share").textContent =
          formatPercent(oneTimeShare);
        document.getElementById("res-daily-share").textContent =
          formatPercent(dailyShare);
        document.getElementById("res-buffer-share").textContent =
          formatPercent(bufferShare);

        document.getElementById("results-section").classList.remove("hidden");
      }

      function resetBudget() {
        document.getElementById("trip-days").value = 7;
        document.getElementById("travelers").value = 2;
        document.getElementById("currency-symbol").value = "$";
        document.getElementById("buffer-percent").value = 15;

        document.getElementById("cost-flights").value = 800;
        document.getElementById("cost-accommodation-fixed").value = 0;
        document.getElementById("cost-transport-fixed").value = 150;
        document.getElementById("cost-visa").value = 0;
        document.getElementById("cost-insurance").value = 80;
        document.getElementById("cost-gear").value = 0;
        document.getElementById("cost-activities-fixed").value = 120;
        document.getElementById("cost-other-fixed").value = 0;

        document.getElementById("daily-accommodation").value = 40;
        document.getElementById("daily-food").value = 25;
        document.getElementById("daily-transport").value = 10;
        document.getElementById("daily-activities").value = 20;
        document.getElementById("daily-misc").value = 10;
        document.getElementById("daily-workspace").value = 0;

        document.getElementById("already-saved").value = 500;
        document.getElementById("months-until-trip").value = 6;

        document.getElementById("results-section").classList.add("hidden");
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculateBudget);
      document
        .getElementById("reset-btn")
        .addEventListener("click", resetBudget);

      [
        "trip-days",
        "travelers",
        "currency-symbol",
        "buffer-percent",
        "cost-flights",
        "cost-accommodation-fixed",
        "cost-transport-fixed",
        "cost-visa",
        "cost-insurance",
        "cost-gear",
        "cost-activities-fixed",
        "cost-other-fixed",
        "daily-accommodation",
        "daily-food",
        "daily-transport",
        "daily-activities",
        "daily-misc",
        "daily-workspace",
        "already-saved",
        "months-until-trip",
      ].forEach((id) => {
        const el = document.getElementById(id);
        el.addEventListener("change", () => {
          if (
            !document
              .getElementById("results-section")
              .classList.contains("hidden")
          ) {
            calculateBudget();
          }
        });
      });

