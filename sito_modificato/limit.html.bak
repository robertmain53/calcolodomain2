              typeRadios.forEach(r => { if (r.value === 'two-sided') r.checked = true; });
            } else if (type === 'sine') {
              funcInput.value = 'sin(x) / x';
              pointInput.value = '0';
              typeRadios.forEach(r => { if (r.value === 'two-sided') r.checked = true; });
            } else if (type === 'jump') {
              funcInput.value = 'abs(x) / x';
              pointInput.value = '0';
              typeRadios.forEach(r => { if (r.value === 'two-sided') r.checked = true; });
            } else if (type === 'infinity') {
              funcInput.value = '(1 + 1/x)^x';
              pointInput.value = '1';
              typeRadios.forEach(r => { if (r.value === 'plus-infinity') r.checked = true; });
            }
            clearAll();
          });
        });
      });
