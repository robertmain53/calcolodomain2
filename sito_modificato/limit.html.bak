      document.addEventListener('DOMContentLoaded', function () {
        const funcInput = document.getElementById('func-input');
        const pointInput = document.getElementById('point-input');
        const samplesInput = document.getElementById('samples-input');
        const decimalsSelect = document.getElementById('decimals');
        const typeRadios = document.querySelectorAll('input[name="limit-type"]');

        const btnCalc = document.getElementById('btn-calc-limit');
        const btnClear = document.getElementById('btn-clear-limit');
