    <script>
      // Utility: convert ft/m to feet
      function toFeet(value, unit) {
        const v = parseFloat(value) || 0;
        return unit === "m" ? v * 3.28084 : v;
      }
      // Nominal to actual lumber sizes (inches)
      const lumberActual = {
        "2x3": { w: 1.5, h: 2.5 },
        "2x4": { w: 1.5, h: 3.5 },
        "2x6": { w: 1.5, h: 5.5 },
        "2x8": { w: 1.5, h: 7.25 },
        "2x10": { w: 1.5, h: 9.25 },
        "2x12": { w: 1.5, h: 11.25 },
      };
      function boardFeet(totalLengthFt, sizeKey) {
        const dim = lumberActual[sizeKey] || { w: 1.5, h: 3.5 };
        const totalLengthIn = totalLengthFt * 12;
        return (dim.w * dim.h * totalLengthIn) / 144;
      }
      function applyWaste(value, wastePct) {
        const v = parseFloat(value) || 0;
        const w = parseFloat(wastePct) || 0;
        return v * (1 + w / 100);
      }
      function round(value, decimals) {
        const d = decimals ?? 2;
        const factor = Math.pow(10, d);
        return Math.round((value + Number.EPSILON) * factor) / factor;
      }

      // Tab handling
      document.querySelectorAll(".tab-btn").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document.querySelectorAll(".tab-btn").forEach((b) => {
            b.classList.remove("tab-active");
            b.setAttribute("aria-selected", "false");
          });
          btn.classList.add("tab-active");
          btn.setAttribute("aria-selected", "true");
          document
            .querySelectorAll(".tab-panel")
            .forEach((p) => p.classList.add("hidden"));
          document.getElementById(target + "-tab").classList.remove("hidden");
        });
      });

      // Enable custom spacing fields
      function setupSpacing(selectId, inputId) {
        const sel = document.getElementById(selectId);
        const inp = document.getElementById(inputId);
        sel.addEventListener("change", () => {
          if (sel.value === "custom") {
            inp.disabled = false;
          } else {
            inp.disabled = true;
            inp.value = "";
          }
        });
      }
      setupSpacing("stud-spacing", "stud-spacing-custom");
      setupSpacing("joist-spacing", "joist-spacing-custom");
      setupSpacing("rafter-spacing", "rafter-spacing-custom");

      // Wall calculation
      document.getElementById("calc-wall").addEventListener("click", () => {
        const lengthFt = toFeet(
          document.getElementById("wall-length").value,
          document.getElementById("wall-length-unit").value
        );
        const heightFt = toFeet(
          document.getElementById("wall-height").value,
          document.getElementById("wall-height-unit").value
        );
        const spacingSel = document.getElementById("stud-spacing").value;
        const spacingIn =
          spacingSel === "custom"
            ? parseFloat(
                document.getElementById("stud-spacing-custom").value
              ) || 16
            : parseFloat(spacingSel);
        const studSize = document.getElementById("stud-size").value;
        const plateCount =
          parseInt(document.getElementById("plate-count").value, 10) || 2;
        const openings =
          parseInt(document.getElementById("wall-openings").value, 10) || 0;
        const sheathingThk =
          parseFloat(document.getElementById("wall-sheathing").value) || 0;
        const waste =
          parseFloat(document.getElementById("wall-waste").value) || 0;

        const lengthIn = lengthFt * 12;
        let studsBase = Math.floor(lengthIn / spacingIn) + 1;
        studsBase += 2; // extra for corners/ends
        const extraPerOpening = 3; // king/jack/cripple allowance
        let openingStuds = openings * extraPerOpening;
        let totalStuds = studsBase + openingStuds;

        totalStuds = Math.ceil(applyWaste(totalStuds, waste));
        openingStuds = Math.ceil(applyWaste(openingStuds, waste));

        const plateLf = applyWaste(lengthFt * plateCount, waste);
        const studLengthFt = heightFt; // simple estimate
        const totalStudLf = totalStuds * studLengthFt;
        const totalLf = totalStudLf + plateLf;
        const bf = boardFeet(totalLf, studSize);

        const wallArea = lengthFt * heightFt;
        let sheathArea = 0;
        let sheathSheets = 0;
        let nails = 0;
        if (sheathingThk > 0) {
          sheathArea = applyWaste(wallArea, waste);
          sheathSheets = Math.ceil(sheathArea / 32);
          nails = Math.ceil(sheathSheets * 32 * 12); // rough: 12 nails per edge, 32 edges
        }

        document.getElementById("wall-studs-out").textContent =
          totalStuds + " pcs";
        document.getElementById("wall-plates-out").textContent =
          round(plateLf, 1) + " ft";
        document.getElementById("wall-opening-studs-out").textContent =
          openingStuds + " pcs";
        document.getElementById("wall-bf-out").textContent =
          round(bf, 1) + " bd ft";
        document.getElementById("wall-sheath-area-out").textContent = round(
          sheathArea,
          1
        );
        document.getElementById("wall-sheath-sheets-out").textContent =
          sheathSheets;
        document.getElementById("wall-nails-out").textContent =
          nails.toLocaleString();
        document.getElementById("wall-results").classList.remove("hidden");
      });

      // Floor calculation
      document.getElementById("calc-floor").addEventListener("click", () => {
        const lengthFt = toFeet(
          document.getElementById("floor-length").value,
          document.getElementById("floor-length-unit").value
        );
        const widthFt = toFeet(
          document.getElementById("floor-width").value,
          document.getElementById("floor-width-unit").value
        );
        const spacingSel = document.getElementById("joist-spacing").value;
        const spacingIn =
          spacingSel === "custom"
            ? parseFloat(
                document.getElementById("joist-spacing-custom").value
              ) || 16
            : parseFloat(spacingSel);
        const joistSize = document.getElementById("joist-size").value;
        const rimCount =
          parseInt(document.getElementById("rim-joists").value, 10) || 2;
        const sheathingThk =
          parseFloat(document.getElementById("floor-sheathing").value) || 0;
        const waste =
          parseFloat(document.getElementById("floor-waste").value) || 0;

        const widthIn = widthFt * 12;
        let joists = Math.floor(widthIn / spacingIn) + 1;
        joists = Math.ceil(applyWaste(joists, waste));
        const joistLf = joists * lengthFt;
        const rimLf = applyWaste(rimCount * widthFt, waste);
        const totalLf = joistLf + rimLf;
        const bf = boardFeet(totalLf, joistSize);

        const area = lengthFt * widthFt;
        let sheathArea = 0;
        let sheets = 0;
        let screws = 0;
        if (sheathingThk > 0) {
          sheathArea = applyWaste(area, waste);
          sheets = Math.ceil(sheathArea / 32);
          screws = Math.ceil(sheets * 50); // ~50 screws per sheet
        }

        document.getElementById("floor-joists-out").textContent =
          joists + " pcs";
        document.getElementById("floor-rims-out").textContent =
          round(rimLf, 1) + " ft";
        document.getElementById("floor-bf-out").textContent =
          round(bf, 1) + " bd ft";
        document.getElementById("floor-area-out").textContent = round(
          sheathArea,
          1
        );
        document.getElementById("floor-sheets-out").textContent = sheets;
        document.getElementById("floor-screws-out").textContent =
          screws.toLocaleString();
        document.getElementById("floor-results").classList.remove("hidden");
      });

      // Roof calculation
      document.getElementById("calc-roof").addEventListener("click", () => {
        const spanFt = toFeet(
          document.getElementById("roof-span").value,
          document.getElementById("roof-span-unit").value
        );
        const lengthFt = toFeet(
          document.getElementById("roof-length").value,
          document.getElementById("roof-length-unit").value
        );
        const pitch =
          parseFloat(document.getElementById("roof-pitch").value) || 6;
        const spacingSel = document.getElementById("rafter-spacing").value;
        const spacingIn =
          spacingSel === "custom"
            ? parseFloat(
                document.getElementById("rafter-spacing-custom").value
              ) || 24
            : parseFloat(spacingSel);
        const rafterSize = document.getElementById("rafter-size").value;
        const overhangFt =
          parseFloat(document.getElementById("roof-overhang").value) || 0;
        const sheathingThk =
          parseFloat(document.getElementById("roof-sheathing").value) || 0;
        const waste =
          parseFloat(document.getElementById("roof-waste").value) || 0;

        const runFt = spanFt / 2 + overhangFt;
        const slopeFactor =
          Math.sqrt(Math.pow(pitch, 2) + Math.pow(12, 2)) / 12;
        const rafterLengthFt = runFt * slopeFactor;

        const lengthIn = lengthFt * 12;
        let raftersPerSide = Math.floor(lengthIn / spacingIn) + 1;
        raftersPerSide = Math.ceil(applyWaste(raftersPerSide, waste));
        const totalRafters = raftersPerSide * 2;
        const totalLf = totalRafters * rafterLengthFt;
        const bf = boardFeet(totalLf, rafterSize);

        const areaOneSide = runFt * lengthFt * slopeFactor;
        let roofArea = 0;
        let sheets = 0;
        let nails = 0;
        if (sheathingThk > 0) {
          roofArea = applyWaste(areaOneSide * 2, waste);
          sheets = Math.ceil(roofArea / 32);
          nails = Math.ceil(sheets * 32 * 12);
        }

        document.getElementById("roof-rafters-out").textContent =
          raftersPerSide + " pcs per side (" + totalRafters + " total)";
        document.getElementById("roof-rafter-length-out").textContent =
          round(rafterLengthFt, 2) + " ft";
        document.getElementById("roof-bf-out").textContent =
          round(bf, 1) + " bd ft";
        document.getElementById("roof-area-out").textContent = round(
          roofArea,
          1
        );
        document.getElementById("roof-sheets-out").textContent = sheets;
        document.getElementById("roof-nails-out").textContent =
          nails.toLocaleString();
        document.getElementById("roof-results").classList.remove("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
