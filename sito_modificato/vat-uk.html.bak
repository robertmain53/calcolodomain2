    <script>
      (function () {
        const amountInput = document.getElementById("amount");
        const modeToggle = document.getElementById("mode-toggle");
        const modeHelper = document.getElementById("mode-helper");
        const amountLabelSuffix = document.getElementById(
          "amount-label-suffix"
        );
        const netLabel = document.getElementById("net-label");
        const grossLabel = document.getElementById("gross-label");

        const ratePills = document.querySelectorAll(".rate-pill");
        const customRateInput = document.getElementById("custom-rate");

        const currencySelect = document.getElementById("currency-symbol");
        const customCurrencyWrapper = document.getElementById(
          "custom-currency-wrapper"
        );
        const customCurrencyInput = document.getElementById("custom-currency");

        const netAmountEl = document.getElementById("net-amount");
        const vatAmountEl = document.getElementById("vat-amount");
        const grossAmountEl = document.getElementById("gross-amount");
        const formulaText = document.getElementById("formula-text");

        let currentRate = 20;
        let currentCurrency = "£";

        function getCurrencySymbol() {
          if (currencySelect.value === "custom") {
            return customCurrencyInput.value || "";
          }
          return currencySelect.value;
        }

        function formatMoney(value) {
          const symbol = getCurrencySymbol();
          const num = isFinite(value) ? value : 0;
          return symbol + num.toFixed(2);
        }

        function getRate() {
          if (customRateInput.disabled) {
            return currentRate;
          }
          const val = parseFloat(customRateInput.value.replace(",", "."));
          return isNaN(val) ? 0 : val;
        }

        function updateModeLabels() {
          const addMode = !modeToggle.checked;
          if (addMode) {
            amountLabelSuffix.textContent = "(net, excluding VAT)";
            netLabel.textContent = "Net (excl. VAT)";
            grossLabel.textContent = "Gross (incl. VAT)";
            modeHelper.textContent =
              "Add VAT: enter net price → get VAT and gross. Remove VAT: enter VAT-inclusive price → get net and VAT.";
          } else {
            amountLabelSuffix.textContent = "(gross, including VAT)";
            netLabel.textContent = "Net (excl. VAT)";
            grossLabel.textContent = "Gross (incl. VAT)";
            modeHelper.textContent =
              "Remove VAT: enter VAT-inclusive price → get net and VAT. Add VAT: enter net price → get VAT and gross.";
          }
        }

        function calculate() {
          const rawAmount = parseFloat(
            (amountInput.value || "").toString().replace(",", ".")
          );
          const amount = isNaN(rawAmount) ? 0 : rawAmount;
          const rate = getRate();
          const addMode = !modeToggle.checked;

          let net = 0,
            vat = 0,
            gross = 0;

          if (addMode) {
            net = amount;
            vat = net * (rate / 100);
            gross = net + vat;
            formulaText.textContent = `Formula (add ${rate
              .toFixed(2)
              .replace(
                /\.00$/,
                ""
              )}% VAT): gross = net × (1 + ${rate}/100), VAT = gross − net.`;
          } else {
            gross = amount;
            const divisor = 1 + rate / 100;
            net = divisor === 0 ? 0 : gross / divisor;
            vat = gross - net;
            formulaText.textContent = `Formula (remove ${rate
              .toFixed(2)
              .replace(
                /\.00$/,
                ""
              )}% VAT): net = gross ÷ (1 + ${rate}/100), VAT = gross − net.`;
          }

          netAmountEl.textContent = formatMoney(net);
          vatAmountEl.textContent = formatMoney(vat);
          grossAmountEl.textContent = formatMoney(gross);
        }

        // Event listeners
        amountInput.addEventListener("input", calculate);
        modeToggle.addEventListener("change", () => {
          updateModeLabels();
          calculate();
        });

        ratePills.forEach((pill) => {
          pill.addEventListener("click", () => {
            ratePills.forEach((p) => p.classList.remove("rate-pill-active"));
            pill.classList.add("rate-pill-active");

            const rate = pill.getAttribute("data-rate");
            if (rate === "custom") {
              customRateInput.disabled = false;
              customRateInput.focus();
            } else {
              customRateInput.disabled = true;
              currentRate = parseFloat(rate);
            }
            calculate();
          });
        });

        customRateInput.addEventListener("input", () => {
          currentRate = getRate();
          calculate();
        });

        currencySelect.addEventListener("change", () => {
          if (currencySelect.value === "custom") {
            customCurrencyWrapper.classList.remove("hidden");
            customCurrencyInput.focus();
          } else {
            customCurrencyWrapper.classList.add("hidden");
          }
          currentCurrency = getCurrencySymbol();
          calculate();
        });

        customCurrencyInput.addEventListener("input", () => {
          currentCurrency = getCurrencySymbol();
          calculate();
        });

        // Initial state
        updateModeLabels();
        calculate();
      })();
    </script>

