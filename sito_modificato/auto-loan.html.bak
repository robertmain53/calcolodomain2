    <script>
      // Utility functions
      function fmtCurrency(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" +
          value.toLocaleString(undefined, {
            maximumFractionDigits: 2,
            minimumFractionDigits: 2,
          })
        );
      }

      function fmtPercent(value) {
        if (!isFinite(value)) return "—";
        return value.toFixed(2) + "%";
      }

      function calcPayment(P, annualRate, months) {
        if (months <= 0 || P <= 0) return 0;
        const r = annualRate / 100 / 12;
        if (r === 0) return P / months;
        const pow = Math.pow(1 + r, months);
        return (P * (r * pow)) / (pow - 1);
      }

      function calcPrincipalFromPayment(M, annualRate, months) {
        const r = annualRate / 100 / 12;
        if (months <= 0 || M <= 0) return 0;
        if (r === 0) return M * months;
        const pow = Math.pow(1 + r, months);
        return (M * (pow - 1)) / (r * pow);
      }

      function estimateEffectiveApr(P, M, months) {
        // Simple IRR via binary search on APR
        if (P <= 0 || M <= 0 || months <= 0) return NaN;
        let low = 0,
          high = 50,
          mid;
        for (let i = 0; i < 40; i++) {
          mid = (low + high) / 2;
          const testPayment = calcPayment(P, mid, months);
          if (testPayment > M) high = mid;
          else low = mid;
        }
        return (low + high) / 2;
      }

      function getPayoffDate(months) {
        if (!Number.isFinite(months) || months <= 0) return "—";
        const d = new Date();
        d.setMonth(d.getMonth() + Math.round(months));
        return d.toLocaleDateString(undefined, {
          year: "numeric",
          month: "short",
        });
      }

      function buildSchedule(P, annualRate, months, M) {
        const r = annualRate / 100 / 12;
        let balance = P;
        const rows = [];
        for (let i = 1; i <= months; i++) {
          const interest = r === 0 ? 0 : balance * r;
          let principal = M - interest;
          if (principal > balance) principal = balance;
          balance -= principal;
          rows.push({
            num: i,
            payment: M,
            principal,
            interest,
            balance: Math.max(0, balance),
          });
          if (balance <= 0) break;
        }
        return rows;
      }

      function updateTermComparisons(P, annualRate) {
        const terms = [36, 48, 60, 72, 84];
        terms.forEach((term) => {
          const el = document.getElementById("term" + term);
          if (!el) return;
          const pay = calcPayment(P, annualRate, term);
          el.textContent = pay > 0 ? fmtCurrency(pay) : "$0";
        });
      }

      function recalcMain() {
        const price =
          parseFloat(document.getElementById("vehiclePrice").value) || 0;
        const down =
          parseFloat(document.getElementById("downPayment").value) || 0;
        const tradeIn =
          parseFloat(document.getElementById("tradeIn").value) || 0;
        const taxRate =
          parseFloat(document.getElementById("salesTax").value) || 0;
        const term =
          parseInt(document.getElementById("loanTerm").value, 10) || 0;
        const apr =
          parseFloat(document.getElementById("interestRate").value) || 0;
        const fees = parseFloat(document.getElementById("fees").value) || 0;
        const rollTax = document.getElementById("includeTaxInLoan").checked;

        const taxable = Math.max(0, price - tradeIn);
        const tax = taxable * (taxRate / 100);

        let amountFinanced = price - down - tradeIn + fees;
        if (rollTax) amountFinanced += tax;
        amountFinanced = Math.max(0, amountFinanced);

        const payment = calcPayment(amountFinanced, apr, term);
        const totalPaid = payment * term;
        const totalInterest = totalPaid - amountFinanced;
        const payoffDate = getPayoffDate(term);

        // Effective APR including fees and rolled-in tax
        const effectiveApr = estimateEffectiveApr(
          price - down - tradeIn,
          payment,
          term
        );

        // Update summary
        document.getElementById("summaryAmountFinanced").textContent =
          fmtCurrency(amountFinanced);
        document.getElementById("summaryMonthlyPayment").textContent =
          fmtCurrency(payment);
        document.getElementById("summaryTotalPaid").textContent =
          fmtCurrency(totalPaid);
        document.getElementById("summaryTotalInterest").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("summaryPayoffDate").textContent = payoffDate;
        document.getElementById("summaryEffectiveApr").textContent = isNaN(
          effectiveApr
        )
          ? "—"
          : fmtPercent(effectiveApr);

        // Breakdown
        document.getElementById("breakdownPrincipal").textContent =
          fmtCurrency(amountFinanced);
        document.getElementById("breakdownInterest").textContent =
          fmtCurrency(totalInterest);
        document.getElementById("breakdownTax").textContent = fmtCurrency(tax);
        document.getElementById("breakdownFees").textContent =
          fmtCurrency(fees);

        const totalCost = amountFinanced + totalInterest + (rollTax ? 0 : tax); // avoid double-counting tax if rolled in
        const pShare = totalCost > 0 ? (amountFinanced / totalCost) * 100 : 0;
        const iShare = totalCost > 0 ? (totalInterest / totalCost) * 100 : 0;
        const tShare = totalCost > 0 ? (tax / totalCost) * 100 : 0;
        const fShare = totalCost > 0 ? (fees / totalCost) * 100 : 0;

        document.getElementById("barPrincipal").style.width = pShare + "%";
        document.getElementById("barInterest").style.width = iShare + "%";
        document.getElementById("barTax").style.width = tShare + "%";
        document.getElementById("barFees").style.width = fShare + "%";

        // Term comparison
        updateTermComparisons(amountFinanced, apr);

        // Schedule (if visible)
        if (
          !document
            .getElementById("scheduleContainer")
            .classList.contains("hidden")
        ) {
          renderSchedule(amountFinanced, apr, term, payment);
        }
      }

      function renderSchedule(P, apr, term, payment) {
        const tbody = document.getElementById("scheduleBody");
        tbody.innerHTML = "";
        if (P <= 0 || term <= 0 || payment <= 0) return;
        const rows = buildSchedule(P, apr, term, payment);
        const frag = document.createDocumentFragment();
        rows.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1 text-gray-700">${row.num}</td>
        <td class="px-2 py-1 text-right text-gray-700">${fmtCurrency(
          row.payment
        )}</td>
        <td class="px-2 py-1 text-right text-gray-700">${fmtCurrency(
          row.principal
        )}</td>
        <td class="px-2 py-1 text-right text-gray-700">${fmtCurrency(
          row.interest
        )}</td>
        <td class="px-2 py-1 text-right text-gray-700">${fmtCurrency(
          row.balance
        )}</td>
      `;
          frag.appendChild(tr);
        });
        tbody.appendChild(frag);
      }

      function recalcAffordability() {
        const targetPayment =
          parseFloat(document.getElementById("affMonthlyBudget").value) || 0;
        const term =
          parseInt(document.getElementById("affLoanTerm").value, 10) || 0;
        const apr =
          parseFloat(document.getElementById("affInterestRate").value) || 0;
        const down =
          parseFloat(document.getElementById("affDownPayment").value) || 0;
        const tradeIn =
          parseFloat(document.getElementById("affTradeIn").value) || 0;
        const taxRate =
          parseFloat(document.getElementById("affSalesTax").value) || 0;
        const fees = parseFloat(document.getElementById("affFees").value) || 0;

        const principal = calcPrincipalFromPayment(targetPayment, apr, term);
        if (principal <= 0) {
          document.getElementById("affMaxPrice").textContent = "$0";
          document.getElementById("affAmountFinanced").textContent = "$0";
          document.getElementById("affTax").textContent = "$0";
          document.getElementById("affInterest").textContent = "$0";
          return;
        }

        // We need to solve for price given principal = price - down - tradeIn + fees + tax(price - tradeIn)
        // Let x = price. Tax = (x - tradeIn) * t. Principal = x - down - tradeIn + fees + (x - tradeIn)*t
        // => Principal = x(1 + t) - down - tradeIn(1 + t) + fees
        // => x = [Principal + down + tradeIn(1 + t) - fees] / (1 + t)
        const t = taxRate / 100;
        const maxPrice =
          (principal + down + tradeIn * (1 + t) - fees) / (1 + t);
        const taxable = Math.max(0, maxPrice - tradeIn);
        const tax = taxable * t;
        const totalInterest = targetPayment * term - principal;

        document.getElementById("affMaxPrice").textContent =
          fmtCurrency(maxPrice);
        document.getElementById("affAmountFinanced").textContent =
          fmtCurrency(principal);
        document.getElementById("affTax").textContent = fmtCurrency(tax);
        document.getElementById("affInterest").textContent =
          fmtCurrency(totalInterest);
      }

      document.addEventListener("DOMContentLoaded", function () {
        // Tab switching
        const tabPayment = document.getElementById("tab-payment");
        const tabAff = document.getElementById("tab-affordability");
        const panelPayment = document.getElementById("panel-payment");
        const panelAff = document.getElementById("panel-affordability");

        tabPayment.addEventListener("click", () => {
          tabPayment.classList.add("tab-active");
          tabPayment.classList.remove("tab-inactive");
          tabAff.classList.add("tab-inactive");
          tabAff.classList.remove("tab-active");
          panelPayment.classList.remove("hidden");
          panelAff.classList.add("hidden");
        });

        tabAff.addEventListener("click", () => {
          tabAff.classList.add("tab-active");
          tabAff.classList.remove("tab-inactive");
          tabPayment.classList.add("tab-inactive");
          tabPayment.classList.remove("tab-active");
          panelAff.classList.remove("hidden");
          panelPayment.classList.add("hidden");
          recalcAffordability();
        });

        // Main calculate
        document
          .getElementById("calculateBtn")
          .addEventListener("click", recalcMain);

        // Auto-recalc on input blur for main form
        [
          "vehiclePrice",
          "downPayment",
          "tradeIn",
          "salesTax",
          "loanTerm",
          "interestRate",
          "fees",
          "includeTaxInLoan",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          const evt = el.type === "checkbox" ? "change" : "blur";
          el.addEventListener(evt, recalcMain);
        });

        // Toggle schedule
        document
          .getElementById("toggleScheduleBtn")
          .addEventListener("click", function () {
            const container = document.getElementById("scheduleContainer");
            const isHidden = container.classList.contains("hidden");
            if (isHidden) {
              container.classList.remove("hidden");
              this.textContent = "Hide schedule";
              // Re-render schedule with current values
              const price =
                parseFloat(document.getElementById("vehiclePrice").value) || 0;
              const down =
                parseFloat(document.getElementById("downPayment").value) || 0;
              const tradeIn =
                parseFloat(document.getElementById("tradeIn").value) || 0;
              const taxRate =
                parseFloat(document.getElementById("salesTax").value) || 0;
              const term =
                parseInt(document.getElementById("loanTerm").value, 10) || 0;
              const apr =
                parseFloat(document.getElementById("interestRate").value) || 0;
              const fees =
                parseFloat(document.getElementById("fees").value) || 0;
              const rollTax =
                document.getElementById("includeTaxInLoan").checked;

              const taxable = Math.max(0, price - tradeIn);
              const tax = taxable * (taxRate / 100);
              let amountFinanced = price - down - tradeIn + fees;
              if (rollTax) amountFinanced += tax;
              amountFinanced = Math.max(0, amountFinanced);
              const payment = calcPayment(amountFinanced, apr, term);
              renderSchedule(amountFinanced, apr, term, payment);
            } else {
              container.classList.add("hidden");
              this.textContent = "Show schedule";
            }
          });

        // Affordability calculate
        document
          .getElementById("affCalculateBtn")
          .addEventListener("click", recalcAffordability);

        [
          "affMonthlyBudget",
          "affLoanTerm",
          "affInterestRate",
          "affDownPayment",
          "affTradeIn",
          "affSalesTax",
          "affFees",
        ].forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          el.addEventListener("blur", recalcAffordability);
        });

        // Initial calculation
        recalcMain();
      });
    </script>

