    <script>
      // Utility: clamp and parse integer
      function getInt(id, min, max) {
        const el = document.getElementById(id);
        let v = parseInt(el.value, 10);
        if (isNaN(v)) v = 0;
        if (min !== undefined) v = Math.max(min, v);
        if (max !== undefined) v = Math.min(max, v);
        el.value = v;
        return v;
      }

      function hmsToSeconds(minId, secId) {
        const m = getInt(minId, 0, 59);
        const s = getInt(secId, 0, 59);
        return m * 60 + s;
      }

      function formatTime(totalSeconds) {
        totalSeconds = Math.max(0, Math.round(totalSeconds));
        const h = Math.floor(totalSeconds / 3600);
        const m = Math.floor((totalSeconds % 3600) / 60);
        const s = totalSeconds % 60;
        if (h > 0) {
          return (
            String(h).padStart(2, "0") +
            ":" +
            String(m).padStart(2, "0") +
            ":" +
            String(s).padStart(2, "0")
          );
        }
        return String(m).padStart(2, "0") + ":" + String(s).padStart(2, "0");
      }

      // Timer state
      const PhaseType = {
        WARMUP: "warmup",
        WORK: "work",
        REST: "rest",
        COOLDOWN: "cooldown",
      };

      let phases = []; // [{type, duration}]
      let totalDuration = 0; // seconds
      let timerRunning = false;
      let timerStartTime = null; // timestamp ms
      let elapsedBeforePause = 0;
      let rafId = null;

      // DOM elements
      const timerDisplay = document.getElementById("timer-display");
      const timerPhaseLabel = document.getElementById("timer-phase-label");
      const timerSubLabel = document.getElementById("timer-sub-label");
      const timerRing = document.getElementById("timer-ring");
      const timerProgress = document.getElementById("timer-progress");
      const btnStartPause = document.getElementById("btn-start-pause");
      const btnReset = document.getElementById("btn-reset");
      const btnSkip = document.getElementById("btn-skip");
      const btnTabataPreset = document.getElementById("btn-tabata-preset");

      const totalTimeDisplay = document.getElementById("total-time-display");
      const summaryElapsed = document.getElementById("summary-elapsed");
      const summaryRemaining = document.getElementById("summary-remaining");
      const summarySetCurrent = document.getElementById("summary-set-current");
      const summarySetTotal = document.getElementById("summary-set-total");
      const summaryPhase = document.getElementById("summary-phase");
      const timerSetCurrent = document.getElementById("timer-set-current");
      const timerSetTotal = document.getElementById("timer-set-total");

      const countdownToggle = document.getElementById("countdown-toggle");
      const soundWorkSelect = document.getElementById("sound-work");
      const soundRestSelect = document.getElementById("sound-rest");

      // Audio: simple beep and bell using Web Audio API
      let audioCtx = null;
      function playBeep(frequency, durationMs, volume) {
        try {
          if (!audioCtx) {
            audioCtx = new (window.AudioContext || window.webkitAudioContext)();
          }
          const osc = audioCtx.createOscillator();
          const gain = audioCtx.createGain();
          osc.type = "sine";
          osc.frequency.value = frequency;
          gain.gain.value = volume;
          osc.connect(gain);
          gain.connect(audioCtx.destination);
          const now = audioCtx.currentTime;
          osc.start(now);
          osc.stop(now + durationMs / 1000);
        } catch (e) {
          // ignore audio errors (e.g. autoplay restrictions)
        }
      }

      function playAlert(type) {
        const workSound = soundWorkSelect.value;
        const restSound = soundRestSelect.value;
        if (type === PhaseType.WORK) {
          if (workSound === "none") return;
          if (workSound === "bell") {
            playBeep(880, 120, 0.25);
            setTimeout(() => playBeep(660, 120, 0.25), 150);
          } else {
            playBeep(880, 150, 0.3);
          }
        } else if (type === PhaseType.REST) {
          if (restSound === "none") return;
          if (restSound === "bell") {
            playBeep(660, 120, 0.25);
            setTimeout(() => playBeep(440, 120, 0.25), 150);
          } else {
            playBeep(660, 150, 0.3);
          }
        } else {
          // warmup / cooldown: soft beep
          playBeep(520, 120, 0.2);
        }
      }

      function buildPhases() {
        const work = hmsToSeconds("work-min", "work-sec");
        const rest = hmsToSeconds("rest-min", "rest-sec");
        const warmup = hmsToSeconds("warmup-min", "warmup-sec");
        const cooldown = hmsToSeconds("cooldown-min", "cooldown-sec");
        const sets = getInt("sets", 1, 99);

        const newPhases = [];
        if (warmup > 0)
          newPhases.push({ type: PhaseType.WARMUP, duration: warmup });

        for (let i = 0; i < sets; i++) {
          if (work > 0)
            newPhases.push({
              type: PhaseType.WORK,
              duration: work,
              setIndex: i + 1,
              sets,
            });
          if (rest > 0 && (i < sets - 1 || cooldown > 0)) {
            // last rest can be skipped if no cooldown and user prefers; here we keep it if defined
            newPhases.push({
              type: PhaseType.REST,
              duration: rest,
              setIndex: i + 1,
              sets,
            });
          }
        }

        if (cooldown > 0)
          newPhases.push({ type: PhaseType.COOLDOWN, duration: cooldown });

        phases = newPhases;
        totalDuration = phases.reduce((sum, p) => sum + p.duration, 0);

        timerSetTotal.textContent = sets;
        summarySetTotal.textContent = sets;
        totalTimeDisplay.textContent = formatTime(totalDuration);
        if (!timerRunning) {
          updateDisplay(0);
        }
      }

      function getPhaseAtTime(t) {
        let acc = 0;
        for (let i = 0; i < phases.length; i++) {
          const p = phases[i];
          if (t < acc + p.duration) {
            const phaseElapsed = t - acc;
            const phaseRemaining = p.duration - phaseElapsed;
            return {
              index: i,
              phase: p,
              phaseElapsed,
              phaseRemaining,
              phaseStart: acc,
            };
          }
          acc += p.duration;
        }
        return null;
      }

      function updateDisplay(elapsed) {
        if (totalDuration <= 0 || phases.length === 0) {
          timerDisplay.textContent = "00:00";
          timerPhaseLabel.textContent = "Ready";
          summaryElapsed.textContent = "00:00";
          summaryRemaining.textContent = "00:00";
          summaryPhase.textContent = "Idle";
          timerRing.classList.remove("work", "rest", "finished", "paused");
          timerRing.classList.add("idle");
          timerProgress.style.background =
            "conic-gradient(#e5e7eb 0deg, #e5e7eb 360deg)";
          timerSetCurrent.textContent = "0";
          summarySetCurrent.textContent = "0";
          return;
        }

        elapsed = Math.min(elapsed, totalDuration);
        const info = getPhaseAtTime(elapsed);
        const remaining = totalDuration - elapsed;

        summaryElapsed.textContent = formatTime(elapsed);
        summaryRemaining.textContent = formatTime(remaining);

        if (!info) {
          // finished
          timerDisplay.textContent = "00:00";
          timerPhaseLabel.textContent = "Done";
          summaryPhase.textContent = "Finished";
          timerRing.classList.remove("work", "rest", "idle");
          timerRing.classList.add("finished");
          timerProgress.classList.add("finished");
          timerProgress.style.background =
            "conic-gradient(#a855f7 0deg, #a855f7 360deg)";
          return;
        }

        const { phase, phaseRemaining } = info;
        timerDisplay.textContent = formatTime(phaseRemaining);

        let label = "";
        let ringClass = "idle";
        let progressClass = "";
        if (phase.type === PhaseType.WARMUP) {
          label = "Warm-up";
          ringClass = "work";
          progressClass = "work";
        } else if (phase.type === PhaseType.WORK) {
          label = "Work";
          ringClass = "work";
          progressClass = "work";
        } else if (phase.type === PhaseType.REST) {
          label = "Rest";
          ringClass = "rest";
          progressClass = "rest";
        } else if (phase.type === PhaseType.COOLDOWN) {
          label = "Cooldown";
          ringClass = "rest";
          progressClass = "rest";
        }

        timerPhaseLabel.textContent = label;
        summaryPhase.textContent = label;

        timerRing.classList.remove("work", "rest", "idle", "finished");
        timerRing.classList.add(ringClass);

        timerProgress.classList.remove("work", "rest", "finished");
        if (progressClass) timerProgress.classList.add(progressClass);

        const phaseProgress = 1 - phaseRemaining / phase.duration;
        const deg = phaseProgress * 360;
        if (
          phase.type === PhaseType.REST ||
          phase.type === PhaseType.COOLDOWN
        ) {
          timerProgress.style.background = `conic-gradient(#3b82f6 0deg, #3b82f6 ${deg}deg, #e5e7eb ${deg}deg)`;
        } else {
          timerProgress.style.background = `conic-gradient(#22c55e 0deg, #22c55e ${deg}deg, #e5e7eb ${deg}deg)`;
        }

        // Set tracking
        const setIndex = phase.setIndex || 0;
        timerSetCurrent.textContent = setIndex;
        summarySetCurrent.textContent = setIndex;
      }

      function startTimer() {
        if (timerRunning) return;
        if (totalDuration <= 0 || phases.length === 0) {
          buildPhases();
          if (totalDuration <= 0) return;
        }
        timerRunning = true;
        timerRing.classList.remove("paused");
        timerStartTime = performance.now();
        btnStartPause.textContent = "Pause";

        const loop = (now) => {
          if (!timerRunning) return;
          const elapsed = elapsedBeforePause + (now - timerStartTime) / 1000;
          updateDisplay(elapsed);

          if (elapsed >= totalDuration) {
            timerRunning = false;
            elapsedBeforePause = totalDuration;
            btnStartPause.textContent = "Start";
            timerRing.classList.remove("paused");
            timerRing.classList.add("finished");
            playBeep(880, 150, 0.3);
            setTimeout(() => playBeep(660, 150, 0.3), 200);
            return;
          }

          rafId = requestAnimationFrame(loop);
        };

        rafId = requestAnimationFrame(loop);
      }

      function pauseTimer() {
        if (!timerRunning) return;
        timerRunning = false;
        timerRing.classList.add("paused");
        if (rafId) cancelAnimationFrame(rafId);
        const now = performance.now();
        elapsedBeforePause += (now - timerStartTime) / 1000;
        btnStartPause.textContent = "Start";
      }

      function resetTimer() {
        timerRunning = false;
        elapsedBeforePause = 0;
        if (rafId) cancelAnimationFrame(rafId);
        btnStartPause.textContent = "Start";
        timerRing.classList.remove("paused", "finished");
        buildPhases();
      }

      function skipInterval() {
        if (totalDuration <= 0 || phases.length === 0) return;
        const currentElapsed = timerRunning
          ? elapsedBeforePause + (performance.now() - timerStartTime) / 1000
          : elapsedBeforePause;

        const info = getPhaseAtTime(currentElapsed);
        if (!info) return;
        const { index, phaseStart, phase } = info;
        const nextPhaseStart = phaseStart + phase.duration;
        if (nextPhaseStart >= totalDuration) {
          // jump to end
          elapsedBeforePause = totalDuration;
          updateDisplay(totalDuration);
          timerRunning = false;
          btnStartPause.textContent = "Start";
          return;
        }
        elapsedBeforePause = nextPhaseStart;
        if (!timerRunning) {
          updateDisplay(elapsedBeforePause);
        } else {
          timerStartTime = performance.now();
        }
      }

      // Event listeners
      btnStartPause.addEventListener("click", () => {
        if (timerRunning) {
          pauseTimer();
        } else {
          // On first start, optionally play countdown
          if (elapsedBeforePause === 0 && countdownToggle.checked) {
            // 3-2-1 beeps then start
            playBeep(660, 120, 0.25);
            setTimeout(() => playBeep(660, 120, 0.25), 400);
            setTimeout(() => playBeep(660, 120, 0.25), 800);
            setTimeout(() => {
              startTimer();
              // play phase alert for first phase
              const info = getPhaseAtTime(0);
              if (info && info.phase) playAlert(info.phase.type);
            }, 1200);
          } else {
            startTimer();
          }
        }
      });

      btnReset.addEventListener("click", () => {
        resetTimer();
      });

      btnSkip.addEventListener("click", () => {
        skipInterval();
      });

      btnTabataPreset.addEventListener("click", () => {
        document.getElementById("work-min").value = 0;
        document.getElementById("work-sec").value = 20;
        document.getElementById("rest-min").value = 0;
        document.getElementById("rest-sec").value = 10;
        document.getElementById("sets").value = 8;
        document.getElementById("warmup-min").value = 3;
        document.getElementById("warmup-sec").value = 0;
        document.getElementById("cooldown-min").value = 3;
        document.getElementById("cooldown-sec").value = 0;
        resetTimer();
      });

      // Rebuild phases when inputs change
      const inputsToWatch = [
        "work-min",
        "work-sec",
        "rest-min",
        "rest-sec",
        "warmup-min",
        "warmup-sec",
        "cooldown-min",
        "cooldown-sec",
        "sets",
      ];
      inputsToWatch.forEach((id) => {
        const el = document.getElementById(id);
        el.addEventListener("change", () => {
          buildPhases();
        });
        el.addEventListener("input", () => {
          buildPhases();
        });
      });

      // Keyboard shortcuts
      document.addEventListener("keydown", (e) => {
        if (
          e.target &&
          (e.target.tagName === "INPUT" ||
            e.target.tagName === "SELECT" ||
            e.target.tagName === "TEXTAREA")
        ) {
          return; // don't interfere with typing
        }
        if (e.code === "Space") {
          e.preventDefault();
          btnStartPause.click();
        } else if (e.key === "r" || e.key === "R") {
          e.preventDefault();
          btnReset.click();
        } else if (e.key === "n" || e.key === "N") {
          e.preventDefault();
          btnSkip.click();
        }
      });

      // Initial setup
      buildPhases();
      updateDisplay(0);
    </script>

