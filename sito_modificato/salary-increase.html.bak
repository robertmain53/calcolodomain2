    <script>
      // Utility: frequency to periods per year
      const periodsPerYearMap = {
        hourly: 2080, // 40h * 52
        weekly: 52,
        biweekly: 26,
        semimonthly: 24,
        monthly: 12,
        yearly: 1,
      };

      function formatMoney(value) {
        if (value === null || isNaN(value)) return "–";
        const abs = Math.abs(value);
        const decimals = abs >= 1000 ? 0 : 2;
        return (
          "$" + value.toFixed(decimals).replace(/\B(?=(\d{3})+(?!\d))/g, ",")
        );
      }

      function formatPercent(value) {
        if (value === null || isNaN(value)) return "–";
        return value.toFixed(2).replace(/\.00$/, "") + "%";
      }

      function updateModeVisibility() {
        const mode = document.getElementById("mode").value;
        document.getElementById("input-raise-percent").classList.add("hidden");
        document.getElementById("input-new-salary").classList.add("hidden");
        document.getElementById("input-raise-amount").classList.add("hidden");

        if (mode === "newFromPercent") {
          document
            .getElementById("input-raise-percent")
            .classList.remove("hidden");
        } else if (mode === "percentFromNew") {
          document
            .getElementById("input-new-salary")
            .classList.remove("hidden");
        } else if (mode === "percentFromAmount") {
          document
            .getElementById("input-raise-amount")
            .classList.remove("hidden");
        }
      }

      function calculateBackPay(
        raisePerPeriod,
        frequency,
        startDateStr,
        endDateStr
      ) {
        if (
          !startDateStr ||
          !endDateStr ||
          !raisePerPeriod ||
          raisePerPeriod <= 0
        ) {
          return { backPay: 0, periods: 0 };
        }
        const start = new Date(startDateStr);
        const end = new Date(endDateStr);
        if (isNaN(start) || isNaN(end) || end <= start) {
          return { backPay: 0, periods: 0 };
        }

        const msPerDay = 24 * 60 * 60 * 1000;
        const days = (end - start) / msPerDay;

        let periodDays;
        switch (frequency) {
          case "hourly":
            // For hourly, assume 5 days/week, 8h/day -> 260 workdays/year
            // We'll treat each workday as a "period" for back pay
            periodDays = 365 / 260;
            break;
          case "weekly":
            periodDays = 7;
            break;
          case "biweekly":
            periodDays = 14;
            break;
          case "semimonthly":
            periodDays = 365 / 24;
            break;
          case "monthly":
            periodDays = 365 / 12;
            break;
          case "yearly":
            periodDays = 365;
            break;
          default:
            periodDays = 0;
        }

        if (!periodDays) return { backPay: 0, periods: 0 };

        const periods = Math.floor(days / periodDays);
        const backPay = periods * raisePerPeriod;
        return { backPay, periods };
      }

      function buildBreakdown(oldPerPeriod, newPerPeriod, frequency) {
        const container = document.getElementById("breakdownContainer");
        container.innerHTML = "";
        if (!oldPerPeriod || !newPerPeriod || !frequency) return;

        const ppy = periodsPerYearMap[frequency] || 1;
        const oldAnnual = oldPerPeriod * ppy;
        const newAnnual = newPerPeriod * ppy;
        const diffAnnual = newAnnual - oldAnnual;

        const rows = [
          { label: "Per hour", factor: 1 / 2080 },
          { label: "Per week", factor: 52 / ppy },
          { label: "Per month", factor: 12 / ppy },
          { label: "Per year", factor: 1 },
        ];

        rows.forEach((row) => {
          const oldVal = oldAnnual * row.factor;
          const newVal = newAnnual * row.factor;
          const diffVal = diffAnnual * row.factor;
          const div = document.createElement("div");
          div.className = "flex justify-between gap-2";
          div.innerHTML = `
        <span class="text-gray-600">${row.label} increase</span>
        <span class="text-gray-900 font-medium">${formatMoney(
          diffVal
        )} (new: ${formatMoney(newVal)})</span>
      `;
          container.appendChild(div);
        });
      }

      function handleCalculate() {
        const mode = document.getElementById("mode").value;
        const frequency = document.getElementById("frequency").value;
        const oldPay = parseFloat(document.getElementById("oldPay").value);

        const resultsNote = document.getElementById("results-note");
        const resultRaisePercent =
          document.getElementById("resultRaisePercent");
        const resultRaiseAmount = document.getElementById("resultRaiseAmount");
        const resultNewPay = document.getElementById("resultNewPay");
        const resultExtraYear = document.getElementById("resultExtraYear");
        const resultOldAnnual = document.getElementById("resultOldAnnual");
        const resultNewAnnual = document.getElementById("resultNewAnnual");
        const resultBackPay = document.getElementById("resultBackPay");
        const backPayNote = document.getElementById("backPayNote");

        if (!oldPay || oldPay <= 0 || !periodsPerYearMap[frequency]) {
          resultsNote.textContent =
            "Please enter a valid current pay amount and pay frequency.";
          resultRaisePercent.textContent = "–";
          resultRaiseAmount.textContent = "–";
          resultNewPay.textContent = "–";
          resultExtraYear.textContent = "–";
          resultOldAnnual.textContent = "–";
          resultNewAnnual.textContent = "–";
          resultBackPay.textContent = "–";
          backPayNote.textContent = "";
          document.getElementById("breakdownContainer").innerHTML = "";
          return;
        }

        let raisePercent = null;
        let newPayPerPeriod = null;
        let raiseAmountPerPeriod = null;

        if (mode === "newFromPercent") {
          const rp = parseFloat(document.getElementById("raisePercent").value);
          if (isNaN(rp)) {
            resultsNote.textContent = "Enter a raise percentage.";
            return;
          }
          raisePercent = rp;
          newPayPerPeriod = oldPay * (1 + raisePercent / 100);
          raiseAmountPerPeriod = newPayPerPeriod - oldPay;
        } else if (mode === "percentFromNew") {
          const newPayInput = parseFloat(
            document.getElementById("newPayInput").value
          );
          if (!newPayInput || newPayInput <= 0) {
            resultsNote.textContent = "Enter a valid new pay amount.";
            return;
          }
          newPayPerPeriod = newPayInput;
          raiseAmountPerPeriod = newPayPerPeriod - oldPay;
          raisePercent = (raiseAmountPerPeriod / oldPay) * 100;
        } else if (mode === "percentFromAmount") {
          const raiseAmountInput = parseFloat(
            document.getElementById("raiseAmountInput").value
          );
          if (!raiseAmountInput || raiseAmountInput <= 0) {
            resultsNote.textContent = "Enter a valid raise amount.";
            return;
          }
          raiseAmountPerPeriod = raiseAmountInput;
          newPayPerPeriod = oldPay + raiseAmountPerPeriod;
          raisePercent = (raiseAmountPerPeriod / oldPay) * 100;
        }

        const ppy = periodsPerYearMap[frequency];
        const oldAnnual = oldPay * ppy;
        const newAnnual = newPayPerPeriod * ppy;
        const extraAnnual = newAnnual - oldAnnual;

        // Back pay
        const retroStart = document.getElementById("retroactiveStart").value;
        const retroEnd = document.getElementById("retroactiveEnd").value;
        const back = calculateBackPay(
          raiseAmountPerPeriod,
          frequency,
          retroStart,
          retroEnd
        );

        // Update UI
        resultsNote.textContent =
          "Here is your raise breakdown based on the information you entered.";
        resultRaisePercent.textContent = formatPercent(raisePercent);
        resultRaiseAmount.textContent = formatMoney(raiseAmountPerPeriod);
        resultNewPay.textContent = formatMoney(newPayPerPeriod);
        resultExtraYear.textContent = formatMoney(extraAnnual);
        resultOldAnnual.textContent = formatMoney(oldAnnual);
        resultNewAnnual.textContent = formatMoney(newAnnual);

        if (back.periods > 0 && back.backPay > 0) {
          resultBackPay.textContent = formatMoney(back.backPay);
          backPayNote.textContent = `Approximate back pay for ${
            back.periods
          } past ${
            back.periods === 1 ? "period" : "periods"
          } between the selected dates.`;
        } else if (retroStart || retroEnd) {
          resultBackPay.textContent = "$0";
          backPayNote.textContent =
            "Back pay could not be calculated. Check that the end date is after the start date.";
        } else {
          resultBackPay.textContent = "–";
          backPayNote.textContent = "";
        }

        buildBreakdown(oldPay, newPayPerPeriod, frequency);
      }

      document.addEventListener("DOMContentLoaded", function () {
        document
          .getElementById("mode")
          .addEventListener("change", updateModeVisibility);
        document
          .getElementById("calculateBtn")
          .addEventListener("click", handleCalculate);
        updateModeVisibility();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
