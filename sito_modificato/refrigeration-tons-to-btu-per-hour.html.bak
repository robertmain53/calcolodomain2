    <script>
      // Core conversion logic
      function formatNumber(value, decimals = 2) {
        if (!isFinite(value)) return "–";
        return Number(value).toLocaleString(undefined, {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function updateFromTons() {
        const tonsInput = document.getElementById("tonsInput");
        const tonDef = document.getElementById("tonDefinition");
        const resultEl = document.getElementById("resultFromTons");
        const secondaryEl = document.getElementById("resultFromTonsSecondary");

        const tons = parseFloat(tonsInput.value);
        const def = parseFloat(tonDef.value);

        if (isNaN(tons)) {
          resultEl.textContent = "BTU/hr: –";
          secondaryEl.textContent = "";
          return;
        }

        let btuPerHour;
        if (def === 3024) {
          // metric ton: 3024 kcal/hr; 1 kcal ≈ 3.96566683 BTU
          const BTU_PER_KCAL = 3.96566683;
          btuPerHour = tons * def * BTU_PER_KCAL;
        } else {
          btuPerHour = tons * def;
        }

        resultEl.textContent = "BTU/hr: " + formatNumber(btuPerHour, 0);

        if (def === 12000) {
          secondaryEl.textContent = `${formatNumber(
            tons,
            3
          )} ton(s) × 12,000 BTU/hr per ton`;
        } else if (def === 3024) {
          secondaryEl.textContent = `${formatNumber(
            tons,
            3
          )} metric ton(s) × 3,024 kcal/hr × 3.97 BTU/kcal`;
        } else if (def === 12660) {
          secondaryEl.textContent = `${formatNumber(
            tons,
            3
          )} ton(s) × 12,660 BTU/hr per ton (historical ASHRAE)`;
        } else {
          secondaryEl.textContent = "";
        }
      }

      function updateFromBtu() {
        const btuInput = document.getElementById("btuInput");
        const tonDefRev = document.getElementById("tonDefinitionReverse");
        const resultEl = document.getElementById("resultFromBtu");
        const secondaryEl = document.getElementById("resultFromBtuSecondary");

        const btu = parseFloat(btuInput.value);
        const def = parseFloat(tonDefRev.value);

        if (isNaN(btu)) {
          resultEl.textContent = "Tons: –";
          secondaryEl.textContent = "";
          return;
        }

        let tons;
        if (def === 3024) {
          const BTU_PER_KCAL = 3.96566683;
          const btuPerMetricTon = def * BTU_PER_KCAL;
          tons = btu / btuPerMetricTon;
        } else {
          tons = btu / def;
        }

        resultEl.textContent = "Tons: " + formatNumber(tons, 4);

        if (def === 12000) {
          secondaryEl.textContent = `${formatNumber(
            btu,
            0
          )} BTU/hr ÷ 12,000 BTU/hr per ton`;
        } else if (def === 3024) {
          secondaryEl.textContent = `${formatNumber(
            btu,
            0
          )} BTU/hr ÷ (3,024 kcal/hr × 3.97 BTU/kcal)`;
        } else if (def === 12660) {
          secondaryEl.textContent = `${formatNumber(
            btu,
            0
          )} BTU/hr ÷ 12,660 BTU/hr per ton (historical ASHRAE)`;
        } else {
          secondaryEl.textContent = "";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const tonsInput = document.getElementById("tonsInput");
        const tonDef = document.getElementById("tonDefinition");
        const btuInput = document.getElementById("btuInput");
        const tonDefRev = document.getElementById("tonDefinitionReverse");

        if (tonsInput && tonDef) {
          tonsInput.addEventListener("input", updateFromTons);
          tonDef.addEventListener("change", function () {
            // keep reverse selector in sync if both are using US definition
            if (tonDefRev && tonDefRev.value === "12000") {
              tonDefRev.value = tonDef.value;
            }
            updateFromTons();
          });
        }

        if (btuInput && tonDefRev) {
          btuInput.addEventListener("input", updateFromBtu);
          tonDefRev.addEventListener("change", function () {
            if (tonDef && tonDef.value === "12000") {
              tonDef.value = tonDefRev.value;
            }
            updateFromBtu();
          });
        }

        // Quick preset buttons
        document.querySelectorAll("[data-preset-tons]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const val = btn.getAttribute("data-preset-tons");
            tonsInput.value = val;
            updateFromTons();
          });
        });

        document.querySelectorAll("[data-preset-btu]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const val = btn.getAttribute("data-preset-btu");
            btuInput.value = val;
            updateFromBtu();
          });
        });

        // Initialize with a default example
        tonsInput.value = 3;
        updateFromTons();
      });

      // Simple FAQ toggle (in addition to global script_faq if present)
      document.addEventListener("DOMContentLoaded", function () {
        document
          .querySelectorAll("#faq-container .faq-question")
          .forEach((btn) => {
            btn.addEventListener("click", () => {
              const content = btn.parentElement.querySelector("div");
              const icon = btn.querySelector("span:last-child");
              const isHidden = content.classList.contains("hidden");
              document
                .querySelectorAll("#faq-container .faq-question + div")
                .forEach((div) => div.classList.add("hidden"));
              document
                .querySelectorAll(
                  "#faq-container .faq-question span:last-child"
                )
                .forEach((i) => (i.textContent = "+"));
              if (isHidden) {
                content.classList.remove("hidden");
                icon.textContent = "−";
              }
            });
          });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
