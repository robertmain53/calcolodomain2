    <script>
      // Basic helpers
      function gcdExtended(a, b) {
        // Returns {g, x, y, steps} such that a*x + b*y = g = gcd(a,b)
        let old_r = Math.abs(a),
          r = Math.abs(b);
        let old_s = 1,
          s = 0;
        let old_t = 0,
          t = 1;
        const steps = [];
        steps.push(`Initial:
r0 = ${old_r}, r1 = ${r}
s0 = ${old_s}, s1 = ${s}
t0 = ${old_t}, t1 = ${t}`);

        while (r !== 0) {
          const q = Math.trunc(old_r / r);
          const tmp_r = old_r - q * r;
          const tmp_s = old_s - q * s;
          const tmp_t = old_t - q * t;
          steps.push(`q = ${q}, r2 = r0 - q*r1 = ${old_r} - ${q}*${r} = ${tmp_r}
s2 = s0 - q*s1 = ${old_s} - ${q}*${s} = ${tmp_s}
t2 = t0 - q*t1 = ${old_t} - ${q}*${t} = ${tmp_t}`);
          old_r = r;
          r = tmp_r;
          old_s = s;
          s = tmp_s;
          old_t = t;
          t = tmp_t;
          steps.push(`Next:
r0 = ${old_r}, r1 = ${r}
s0 = ${old_s}, s1 = ${s}
t0 = ${old_t}, t1 = ${t}`);
        }
        steps.push(`Done: gcd = r0 = ${old_r}, with coefficients s0 = ${old_s}, t0 = ${old_t}
Check: ${a}*(${old_s}) + ${b}*(${old_t}) = ${a * old_s + b * old_t}`);
        // Adjust signs to match original a,b
        const signA = a < 0 ? -1 : 1;
        const signB = b < 0 ? -1 : 1;
        const x = old_s * signA;
        const y = old_t * signB;
        const g = old_r;
        steps.push(`Adjusted for signs of a and b:
x = ${x}, y = ${y}, gcd = ${g}`);
        return { g, x, y, steps };
      }

      function updatePreview() {
        const a = parseInt(document.getElementById("coef-a").value || "0", 10);
        const b = parseInt(document.getElementById("coef-b").value || "0", 10);
        const c = parseInt(document.getElementById("coef-c").value || "0", 10);
        const parts = [];
        if (a !== 0) parts.push(`${a}·x`);
        if (b !== 0) {
          const sign = b > 0 && parts.length ? "+" : "";
          parts.push(`${sign} ${b}·y`.trim());
        }
        const left = parts.length ? parts.join(" ") : "0";
        document.getElementById(
          "equation-preview"
        ).textContent = `Equation: ${left} = ${c}`;
      }

      function solveDiophantine() {
        const aInput = document.getElementById("coef-a");
        const bInput = document.getElementById("coef-b");
        const cInput = document.getElementById("coef-c");
        const errorBox = document.getElementById("error-box");
        const resultContainer = document.getElementById("result-container");
        const solvBox = document.getElementById("solvability-box");
        const partBox = document.getElementById("particular-solution-box");
        const genBox = document.getElementById("general-solution-box");
        const sampleBox = document.getElementById("sample-solutions-box");
        const euclidBox = document.getElementById("euclid-steps");

        errorBox.classList.add("hidden");
        resultContainer.classList.add("hidden");
        euclidBox.textContent = "";

        const a = parseInt(aInput.value, 10);
        const b = parseInt(bInput.value, 10);
        const c = parseInt(cInput.value, 10);

        if (isNaN(a) || isNaN(b) || isNaN(c)) {
          errorBox.textContent = "Please enter integer values for a, b, and c.";
          errorBox.classList.remove("hidden");
          return;
        }

        if (a === 0 && b === 0) {
          if (c === 0) {
            errorBox.textContent =
              "0·x + 0·y = 0 has infinitely many integer solutions (any x, y). This degenerate case is not handled here.";
          } else {
            errorBox.textContent = "0·x + 0·y = c with c ≠ 0 has no solutions.";
          }
          errorBox.classList.remove("hidden");
          return;
        }

        const { g, x: u, y: v, steps } = gcdExtended(a, b);
        euclidBox.textContent = steps.join("\n\n");

        if (c % g !== 0) {
          solvBox.textContent = `gcd(a, b) = gcd(${a}, ${b}) = ${g}. Since ${g} does not divide c = ${c}, the equation has no integer solutions.`;
          partBox.textContent = "";
          genBox.textContent = "";
          sampleBox.textContent = "";
          resultContainer.classList.remove("hidden");
          return;
        }

        const factor = c / g;
        const x0 = u * factor;
        const y0 = v * factor;

        solvBox.textContent = `gcd(a, b) = gcd(${a}, ${b}) = ${g}. Since ${g} divides c = ${c}, the equation has infinitely many integer solutions.`;

        partBox.innerHTML = `
      <strong>One particular solution</strong><br>
      From the extended Euclidean algorithm we have ${a}·(${u}) + ${b}·(${v}) = ${g}.<br>
      Multiplying by c/g = ${c}/${g} = ${factor} gives a particular solution:
      <span class="font-mono">x₀ = ${x0}, y₀ = ${y0}</span>.
    `;

        const bOverG = b / g;
        const aOverG = a / g;

        genBox.innerHTML = `
      <strong>General integer solution</strong><br>
      All integer solutions are:
      <div class="mt-1 font-mono text-sm">
        x = ${x0} + (${bOverG})·t<br>
        y = ${y0} − (${aOverG})·t, &nbsp; t ∈ ℤ.
      </div>
      You can choose any integer value for t to generate a specific solution (x, y).
    `;

        const ts = [-2, -1, 0, 1, 2];
        const rows = ts
          .map((t) => {
            const x = x0 + bOverG * t;
            const y = y0 - aOverG * t;
            return `<tr>
        <td class="px-2 py-1 text-center">${t}</td>
        <td class="px-2 py-1 text-center">${x}</td>
        <td class="px-2 py-1 text-center">${y}</td>
      </tr>`;
          })
          .join("");

        sampleBox.innerHTML = `
      <strong>Sample solutions</strong>
      <div class="overflow-x-auto mt-2">
        <table class="min-w-full text-xs border border-gray-200">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-2 py-1 border-b border-gray-200 text-center">t</th>
              <th class="px-2 py-1 border-b border-gray-200 text-center">x</th>
              <th class="px-2 py-1 border-b border-gray-200 text-center">y</th>
            </tr>
          </thead>
          <tbody>
            ${rows}
          </tbody>
        </table>
      </div>
    `;

        resultContainer.classList.remove("hidden");
      }

      document
        .getElementById("solve-btn")
        .addEventListener("click", solveDiophantine);
      document.getElementById("clear-btn").addEventListener("click", () => {
        document.getElementById("coef-a").value = "";
        document.getElementById("coef-b").value = "";
        document.getElementById("coef-c").value = "";
        document.getElementById("error-box").classList.add("hidden");
        document.getElementById("result-container").classList.add("hidden");
        document.getElementById("equation-preview").textContent = "";
      });

      ["coef-a", "coef-b", "coef-c"].forEach((id) => {
        document.getElementById(id).addEventListener("input", updatePreview);
      });

      // Initialize preview with default values
      updatePreview();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
