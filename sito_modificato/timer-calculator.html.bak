    <script>
      // Utility functions
      function clampInt(value, min, max) {
        if (value === "" || isNaN(value)) return 0;
        let v = parseInt(value, 10);
        if (!isFinite(v)) v = 0;
        if (min !== undefined && v < min) v = min;
        if (max !== undefined && v > max) v = max;
        return v;
      }

      function hmsToSeconds(h, m, s) {
        return h * 3600 + m * 60 + s;
      }

      function secondsToHms(totalSeconds) {
        const negative = totalSeconds < 0;
        let sec = Math.abs(Math.round(totalSeconds));
        const h = Math.floor(sec / 3600);
        sec = sec % 3600;
        const m = Math.floor(sec / 60);
        const s = sec % 60;
        const pad = (n) => n.toString().padStart(2, "0");
        return {
          negative,
          h,
          m,
          s,
          formatted:
            (negative ? "-" : "") + pad(h) + ":" + pad(m) + ":" + pad(s),
        };
      }

      // Time rows management
      const timeRowsTbody = document.getElementById("time-rows");
      const addRowBtn = document.getElementById("add-row-btn");
      const clearRowsBtn = document.getElementById("clear-rows-btn");
      const calculateBtn = document.getElementById("calculate-btn");
      const calcError = document.getElementById("calc-error");
      const resultsPanel = document.getElementById("results-panel");
      const resultHmsEl = document.getElementById("result-hms");
      const resultSecondsEl = document.getElementById("result-seconds");
      const resultHoursDecEl = document.getElementById("result-hours-dec");
      const resultMinutesDecEl = document.getElementById("result-minutes-dec");
      const loadIntoCountdownBtn = document.getElementById(
        "load-into-countdown"
      );
      const copyHmsBtn = document.getElementById("copy-hms-btn");
      const copyFeedback = document.getElementById("copy-feedback");

      let lastTotalSeconds = 0;

      function createRow(index) {
        const tr = document.createElement("tr");
        tr.className = index % 2 === 0 ? "bg-white" : "bg-gray-50";

        tr.innerHTML = `
      <td class="px-2 py-2 text-xs text-gray-500">${index + 1}</td>
      <td class="px-2 py-2">
        <select class="sign-select border border-gray-300 rounded-md px-1 py-1 text-xs">
          <option value="+">+</option>
          <option value="-">−</option>
        </select>
      </td>
      <td class="px-2 py-2">
        <input type="number" min="0" step="1" value="0" class="time-hours time-input border border-gray-300 rounded-md px-1 py-1 text-xs text-right">
      </td>
      <td class="px-2 py-2">
        <input type="number" min="0" max="59" step="1" value="0" class="time-minutes time-input border border-gray-300 rounded-md px-1 py-1 text-xs text-right">
      </td>
      <td class="px-2 py-2">
        <input type="number" min="0" max="59" step="1" value="0" class="time-seconds time-input border border-gray-300 rounded-md px-1 py-1 text-xs text-right">
      </td>
      <td class="px-2 py-2">
        <input type="text" placeholder="e.g. Task A" class="time-label w-full border border-gray-200 rounded-md px-1 py-1 text-xs">
      </td>
      <td class="px-2 py-2">
        <button type="button" class="remove-row text-xs text-red-600 hover:underline">Remove</button>
      </td>
    `;
        return tr;
      }

      function refreshRowIndices() {
        const rows = Array.from(timeRowsTbody.querySelectorAll("tr"));
        rows.forEach((tr, idx) => {
          const cell = tr.querySelector("td:first-child");
          if (cell) cell.textContent = idx + 1;
          tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";
        });
      }

      function addRow() {
        const index = timeRowsTbody.querySelectorAll("tr").length;
        const row = createRow(index);
        timeRowsTbody.appendChild(row);
      }

      addRowBtn.addEventListener("click", () => {
        addRow();
      });

      clearRowsBtn.addEventListener("click", () => {
        timeRowsTbody.innerHTML = "";
        addRow();
        resultsPanel.classList.add("hidden");
        calcError.classList.add("hidden");
      });

      timeRowsTbody.addEventListener("click", (e) => {
        if (e.target.classList.contains("remove-row")) {
          const tr = e.target.closest("tr");
          if (tr) {
            tr.remove();
            if (timeRowsTbody.querySelectorAll("tr").length === 0) {
              addRow();
            }
            refreshRowIndices();
          }
        }
      });

      calculateBtn.addEventListener("click", () => {
        calcError.classList.add("hidden");
        copyFeedback.classList.add("hidden");

        const rows = Array.from(timeRowsTbody.querySelectorAll("tr"));
        if (rows.length === 0) {
          calcError.textContent = "Please add at least one time row.";
          calcError.classList.remove("hidden");
          return;
        }

        let totalSeconds = 0;
        let anyNonZero = false;

        for (const row of rows) {
          const sign = row.querySelector(".sign-select")?.value || "+";
          const hInput = row.querySelector(".time-hours");
          const mInput = row.querySelector(".time-minutes");
          const sInput = row.querySelector(".time-seconds");

          const h = clampInt(hInput.value, 0);
          const m = clampInt(mInput.value, 0, 59);
          const s = clampInt(sInput.value, 0, 59);

          if (mInput.value !== "" && (mInput.value < 0 || mInput.value > 59))
            mInput.value = m;
          if (sInput.value !== "" && (sInput.value < 0 || sInput.value > 59))
            sInput.value = s;

          const seconds = hmsToSeconds(h, m, s);
          if (seconds !== 0) anyNonZero = true;
          totalSeconds += sign === "-" ? -seconds : seconds;
        }

        if (!anyNonZero) {
          calcError.textContent = "Enter at least one non-zero time value.";
          calcError.classList.remove("hidden");
          resultsPanel.classList.add("hidden");
          return;
        }

        lastTotalSeconds = totalSeconds;
        const hms = secondsToHms(totalSeconds);
        const hoursDec = totalSeconds / 3600;
        const minutesDec = totalSeconds / 60;

        resultHmsEl.textContent = hms.formatted;
        resultSecondsEl.textContent = totalSeconds.toString();
        resultHoursDecEl.textContent = hoursDec.toFixed(4);
        resultMinutesDecEl.textContent = minutesDec.toFixed(2);

        resultsPanel.classList.remove("hidden");
      });

      copyHmsBtn.addEventListener("click", async () => {
        const text = resultHmsEl.textContent || "";
        if (!text) return;
        try {
          await navigator.clipboard.writeText(text);
          copyFeedback.classList.remove("hidden");
          setTimeout(() => copyFeedback.classList.add("hidden"), 2000);
        } catch (e) {
          copyFeedback.textContent = "Copy failed. Please copy manually.";
          copyFeedback.classList.remove("hidden");
          setTimeout(() => copyFeedback.classList.add("hidden"), 3000);
        }
      });

      // Countdown timer
      const cdHoursInput = document.getElementById("cd-hours");
      const cdMinutesInput = document.getElementById("cd-minutes");
      const cdSecondsInput = document.getElementById("cd-seconds");
      const cdStartBtn = document.getElementById("cd-start");
      const cdPauseBtn = document.getElementById("cd-pause");
      const cdResetBtn = document.getElementById("cd-reset");
      const cdDisplay = document.getElementById("cd-display");
      const cdStatus = document.getElementById("cd-status");

      let cdInitialSeconds = 0;
      let cdRemainingSeconds = 0;
      let cdIntervalId = null;
      let cdRunning = false;

      function updateCountdownDisplay() {
        const hms = secondsToHms(cdRemainingSeconds);
        cdDisplay.textContent = hms.formatted.replace(/^-/, "");
        if (cdRemainingSeconds <= 0 && cdRunning) {
          cdStatus.textContent = "Time is up.";
        } else if (cdRunning) {
          cdStatus.textContent = "Countdown running…";
        } else if (cdRemainingSeconds > 0) {
          cdStatus.textContent = "Paused.";
        } else {
          cdStatus.textContent = "";
        }
      }

      function stopCountdownInterval() {
        if (cdIntervalId !== null) {
          clearInterval(cdIntervalId);
          cdIntervalId = null;
        }
      }

      cdStartBtn.addEventListener("click", () => {
        // If not running, (re)initialize from inputs
        if (!cdRunning) {
          const h = clampInt(cdHoursInput.value, 0);
          const m = clampInt(cdMinutesInput.value, 0, 59);
          const s = clampInt(cdSecondsInput.value, 0, 59);
          cdInitialSeconds = hmsToSeconds(h, m, s);
          if (cdInitialSeconds <= 0) {
            cdStatus.textContent = "Enter a duration greater than 0 seconds.";
            return;
          }
          cdRemainingSeconds = cdInitialSeconds;
        }

        stopCountdownInterval();
        cdRunning = true;
        cdStartBtn.disabled = true;
        cdPauseBtn.disabled = false;
        cdResetBtn.disabled = false;

        updateCountdownDisplay();

        cdIntervalId = setInterval(() => {
          if (!cdRunning) return;
          cdRemainingSeconds -= 1;
          if (cdRemainingSeconds <= 0) {
            cdRemainingSeconds = 0;
            updateCountdownDisplay();
            stopCountdownInterval();
            cdRunning = false;
            cdStartBtn.disabled = false;
            cdPauseBtn.disabled = true;
            cdStatus.textContent = "Time is up.";
          } else {
            updateCountdownDisplay();
          }
        }, 1000);
      });

      cdPauseBtn.addEventListener("click", () => {
        if (!cdRunning) return;
        cdRunning = false;
        stopCountdownInterval();
        cdStartBtn.disabled = false;
        cdPauseBtn.disabled = true;
        cdResetBtn.disabled = false;
        cdStatus.textContent = "Paused.";
      });

      cdResetBtn.addEventListener("click", () => {
        stopCountdownInterval();
        cdRunning = false;
        cdRemainingSeconds = cdInitialSeconds;
        updateCountdownDisplay();
        cdStartBtn.disabled = false;
        cdPauseBtn.disabled = true;
        cdResetBtn.disabled = true;
      });

      loadIntoCountdownBtn.addEventListener("click", () => {
        const total = lastTotalSeconds;
        if (!Number.isFinite(total) || total <= 0) {
          cdStatus.textContent =
            "Calculate a positive total first, then load it into the countdown.";
          return;
        }
        const hms = secondsToHms(total);
        cdHoursInput.value = hms.h;
        cdMinutesInput.value = hms.m;
        cdSecondsInput.value = hms.s;
        cdInitialSeconds = total;
        cdRemainingSeconds = total;
        updateCountdownDisplay();
        cdStatus.textContent = "Loaded from calculator. Press Start to begin.";
      });

      // Initialize with a couple of rows
      addRow();
      addRow();
      refreshRowIndices();

      // Mobile menu script (simple)
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const isHidden = menu.classList.contains("hidden");
          menu.classList.toggle("hidden", !isHidden);
          this.setAttribute("aria-expanded", isHidden ? "true" : "false");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
