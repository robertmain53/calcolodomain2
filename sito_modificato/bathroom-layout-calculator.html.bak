    <script>
      // Bathroom layout calculator logic
      document.addEventListener("DOMContentLoaded", () => {
        const unitSelect = document.getElementById("unit-system");
        const lengthImperial = document.getElementById("length-imperial");
        const widthImperial = document.getElementById("width-imperial");
        const lengthMetric = document.getElementById("length-metric");
        const widthMetric = document.getElementById("width-metric");

        const roomLengthFt = document.getElementById("room-length-ft");
        const roomLengthIn = document.getElementById("room-length-in");
        const roomWidthFt = document.getElementById("room-width-ft");
        const roomWidthIn = document.getElementById("room-width-in");
        const roomLengthM = document.getElementById("room-length-m");
        const roomWidthM = document.getElementById("room-width-m");

        const updateRoomBtn = document.getElementById("update-room");
        const canvas = document.getElementById("layout-canvas");
        const ctx = canvas.getContext("2d");
        const scaleLabel = document.getElementById("scale-label");

        const fixtureType = document.getElementById("fixture-type");
        const fixtureWidthInput = document.getElementById("fixture-width");
        const fixtureDepthInput = document.getElementById("fixture-depth");
        const fixtureWidthUnit = document.getElementById("fixture-width-unit");
        const fixtureDepthUnit = document.getElementById("fixture-depth-unit");
        const addFixtureBtn = document.getElementById("add-fixture");
        const clearFixturesBtn = document.getElementById("clear-fixtures");
        const rotateFixtureBtn = document.getElementById("rotate-fixture");
        const deleteFixtureBtn = document.getElementById("delete-fixture");
        const selectedInfo = document.getElementById("selected-info");

        const warningsDiv = document.getElementById("warnings");
        const summaryRoom = document.getElementById("summary-room");
        const summaryCount = document.getElementById("summary-count");
        const summaryOpenArea = document.getElementById("summary-open-area");

        let unitSystem = "imperial"; // 'imperial' or 'metric'
        let room = { length: 96, width: 60 }; // in internal units (inches or cm)
        let scale = 3; // pixels per internal unit
        const margin = 20;
        let fixtures = [];
        let selectedId = null;

        function toInternalLength(value) {
          return unitSystem === "imperial" ? value : value; // already in inches or cm
        }

        function getRoomDimensionsFromInputs() {
          if (unitSystem === "imperial") {
            const L =
              (parseFloat(roomLengthFt.value) || 0) * 12 +
              (parseFloat(roomLengthIn.value) || 0);
            const W =
              (parseFloat(roomWidthFt.value) || 0) * 12 +
              (parseFloat(roomWidthIn.value) || 0);
            return {
              length: Math.max(L, 24),
              width: Math.max(W, 24),
            };
          } else {
            const Lm = parseFloat(roomLengthM.value) || 0;
            const Wm = parseFloat(roomWidthM.value) || 0;
            return {
              length: Math.max(Lm * 100, 100), // cm
              width: Math.max(Wm * 100, 100),
            };
          }
        }

        function updateScale() {
          const maxDim = Math.max(room.length, room.width);
          const usableWidth = canvas.width - 2 * margin;
          const usableHeight = canvas.height - 2 * margin;
          scale = Math.min(usableWidth / maxDim, usableHeight / maxDim);
          const gridSize = unitSystem === "imperial" ? 6 : 15; // 6 in or 15 cm
          scaleLabel.textContent = `Scale: 1 grid = ${gridSize} ${
            unitSystem === "imperial" ? "in" : "cm"
          }`;
        }

        function clearCanvas() {
          ctx.clearRect(0, 0, canvas.width, canvas.height);
        }

        function drawGrid() {
          ctx.save();
          ctx.strokeStyle = "#e5e7eb";
          ctx.lineWidth = 1;
          const gridSize = unitSystem === "imperial" ? 6 : 15;
          const maxX = margin + room.length * scale;
          const maxY = margin + room.width * scale;
          for (let x = margin; x <= maxX; x += gridSize * scale) {
            ctx.beginPath();
            ctx.moveTo(x, margin);
            ctx.lineTo(x, maxY);
            ctx.stroke();
          }
          for (let y = margin; y <= maxY; y += gridSize * scale) {
            ctx.beginPath();
            ctx.moveTo(margin, y);
            ctx.lineTo(maxX, y);
            ctx.stroke();
          }
          ctx.restore();
        }

        function drawRoom() {
          ctx.save();
          ctx.strokeStyle = "#4b5563";
          ctx.lineWidth = 2;
          ctx.strokeRect(
            margin,
            margin,
            room.length * scale,
            room.width * scale
          );
          ctx.restore();
        }

        function drawFixtures() {
          fixtures.forEach((f) => {
            const x = margin + f.x * scale;
            const y = margin + f.y * scale;
            const w = f.width * scale;
            const d = f.depth * scale;
            ctx.save();
            ctx.fillStyle = f.id === selectedId ? "#bfdbfe" : "#d1fae5";
            ctx.strokeStyle = "#374151";
            ctx.lineWidth = 1;
            ctx.fillRect(x, y, w, d);
            ctx.strokeRect(x, y, w, d);
            ctx.fillStyle = "#111827";
            ctx.font = "10px Inter";
            ctx.fillText(f.label, x + 3, y + 12);
            ctx.restore();
          });
        }

        function redraw() {
          clearCanvas();
          drawGrid();
          drawRoom();
          drawFixtures();
        }

        function updateSummary() {
          const roomArea = room.length * room.width;
          let fixturesArea = 0;
          fixtures.forEach((f) => {
            fixturesArea += f.width * f.depth;
          });
          const openArea = Math.max(roomArea - fixturesArea, 0);
          if (unitSystem === "imperial") {
            const roomSqFt = roomArea / 144;
            const openSqFt = openArea / 144;
            summaryRoom.textContent = `${(room.length / 12).toFixed(1)} ft × ${(
              room.width / 12
            ).toFixed(1)} ft (${roomSqFt.toFixed(1)} sq ft)`;
            summaryOpenArea.textContent = `${openSqFt.toFixed(1)} sq ft`;
          } else {
            const roomSqM = roomArea / 10000;
            const openSqM = openArea / 10000;
            summaryRoom.textContent = `${(room.length / 100).toFixed(2)} m × ${(
              room.width / 100
            ).toFixed(2)} m (${roomSqM.toFixed(2)} m²)`;
            summaryOpenArea.textContent = `${openSqM.toFixed(2)} m²`;
          }
          summaryCount.textContent = fixtures.length.toString();
        }

        function addWarning(msg) {
          const p = document.createElement("p");
          p.className = "text-xs mb-1";
          p.textContent = msg;
          warningsDiv.appendChild(p);
        }

        function checkClearances() {
          warningsDiv.innerHTML = "";
          if (fixtures.length === 0) {
            const p = document.createElement("p");
            p.className = "text-xs text-red-700";
            p.textContent =
              "No issues detected yet. Add and move fixtures to see clearance checks.";
            warningsDiv.appendChild(p);
            return;
          }

          const minToiletSide = unitSystem === "imperial" ? 15 : 38; // in or cm
          const minToiletFront = unitSystem === "imperial" ? 21 : 53;
          const minVanityFront = unitSystem === "imperial" ? 21 : 53;
          const minBathFront = unitSystem === "imperial" ? 24 : 61;

          fixtures.forEach((f, idx) => {
            const name = `${
              f.type.charAt(0).toUpperCase() + f.type.slice(1)
            } #${idx + 1}`;
            if (f.type === "toilet") {
              const centerX = f.x + f.width / 2;
              const distLeft = centerX;
              const distRight = room.length - centerX;
              if (distLeft < minToiletSide || distRight < minToiletSide) {
                addWarning(
                  `${name}: less than ${minToiletSide}${
                    unitSystem === "imperial" ? " in" : " cm"
                  } from side wall.`
                );
              }
              const frontClear = room.width - (f.y + f.depth);
              if (frontClear < minToiletFront) {
                addWarning(
                  `${name}: front clearance under ${minToiletFront}${
                    unitSystem === "imperial" ? " in" : " cm"
                  }.`
                );
              }
            }
            if (f.type === "vanity") {
              const frontClear = room.width - (f.y + f.depth);
              if (frontClear < minVanityFront) {
                addWarning(
                  `${name}: front clearance under ${minVanityFront}${
                    unitSystem === "imperial" ? " in" : " cm"
                  }.`
                );
              }
            }
            if (f.type === "tub" || f.type === "shower") {
              const frontClear = room.width - (f.y + f.depth);
              if (frontClear < minBathFront) {
                addWarning(
                  `${name}: front clearance under ${minBathFront}${
                    unitSystem === "imperial" ? " in" : " cm"
                  }.`
                );
              }
            }
          });

          if (!warningsDiv.hasChildNodes()) {
            const p = document.createElement("p");
            p.className = "text-xs text-green-700";
            p.textContent =
              "No clearance issues detected based on the basic rules used by this tool.";
            warningsDiv.appendChild(p);
          }
        }

        function setFixtureDefaults() {
          if (unitSystem === "imperial") {
            fixtureWidthUnit.textContent = "in";
            fixtureDepthUnit.textContent = "in";
          } else {
            fixtureWidthUnit.textContent = "cm";
            fixtureDepthUnit.textContent = "cm";
          }
          const type = fixtureType.value;
          if (unitSystem === "imperial") {
            if (type === "toilet") {
              fixtureWidthInput.value = 20;
              fixtureDepthInput.value = 30;
            } else if (type === "vanity") {
              fixtureWidthInput.value = 30;
              fixtureDepthInput.value = 21;
            } else if (type === "tub") {
              fixtureWidthInput.value = 60;
              fixtureDepthInput.value = 30;
            } else if (type === "shower") {
              fixtureWidthInput.value = 36;
              fixtureDepthInput.value = 36;
            } else if (type === "door") {
              fixtureWidthInput.value = 30;
              fixtureDepthInput.value = 4;
            } else if (type === "window") {
              fixtureWidthInput.value = 36;
              fixtureDepthInput.value = 4;
            } else {
              fixtureWidthInput.value = 24;
              fixtureDepthInput.value = 24;
            }
          } else {
            if (type === "toilet") {
              fixtureWidthInput.value = 50;
              fixtureDepthInput.value = 76;
            } else if (type === "vanity") {
              fixtureWidthInput.value = 75;
              fixtureDepthInput.value = 53;
            } else if (type === "tub") {
              fixtureWidthInput.value = 150;
              fixtureDepthInput.value = 75;
            } else if (type === "shower") {
              fixtureWidthInput.value = 90;
              fixtureDepthInput.value = 90;
            } else if (type === "door") {
              fixtureWidthInput.value = 80;
              fixtureDepthInput.value = 10;
            } else if (type === "window") {
              fixtureWidthInput.value = 90;
              fixtureDepthInput.value = 10;
            } else {
              fixtureWidthInput.value = 60;
              fixtureDepthInput.value = 60;
            }
          }
        }

        unitSelect.addEventListener("change", () => {
          unitSystem = unitSelect.value;
          if (unitSystem === "imperial") {
            lengthImperial.classList.remove("hidden");
            widthImperial.classList.remove("hidden");
            lengthMetric.classList.add("hidden");
            widthMetric.classList.add("hidden");
            const Lm = room.length / 100;
            const Wm = room.width / 100;
            const LIn = Lm * 39.3701;
            const WIn = Wm * 39.3701;
            roomLengthFt.value = Math.floor(LIn / 12);
            roomLengthIn.value = Math.round(LIn % 12);
            roomWidthFt.value = Math.floor(WIn / 12);
            roomWidthIn.value = Math.round(WIn % 12);
            room.length =
              (parseFloat(roomLengthFt.value) || 0) * 12 +
              (parseFloat(roomLengthIn.value) || 0);
            room.width =
              (parseFloat(roomWidthFt.value) || 0) * 12 +
              (parseFloat(roomWidthIn.value) || 0);
          } else {
            lengthImperial.classList.add("hidden");
            widthImperial.classList.add("hidden");
            lengthMetric.classList.remove("hidden");
            widthMetric.classList.remove("hidden");
            const Lm = (room.length / 12) * 0.3048;
            const Wm = (room.width / 12) * 0.3048;
            roomLengthM.value = Lm.toFixed(2);
            roomWidthM.value = Wm.toFixed(2);
            room.length = parseFloat(roomLengthM.value) * 100;
            room.width = parseFloat(roomWidthM.value) * 100;
          }
          fixtures = [];
          selectedId = null;
          rotateFixtureBtn.disabled = true;
          deleteFixtureBtn.disabled = true;
          selectedInfo.textContent =
            "Click a fixture on the canvas to edit or delete it.";
          setFixtureDefaults();
          updateScale();
          redraw();
          updateSummary();
          checkClearances();
        });

        updateRoomBtn.addEventListener("click", () => {
          room = getRoomDimensionsFromInputs();
          updateScale();
          redraw();
          updateSummary();
          checkClearances();
        });

        fixtureType.addEventListener("change", setFixtureDefaults);

        addFixtureBtn.addEventListener("click", () => {
          const w = parseFloat(fixtureWidthInput.value) || 0;
          const d = parseFloat(fixtureDepthInput.value) || 0;
          if (w <= 0 || d <= 0) return;
          const id = Date.now() + Math.random();
          const type = fixtureType.value;
          const labelMap = {
            toilet: "WC",
            vanity: "V",
            tub: "Tub",
            shower: "Shwr",
            door: "Door",
            window: "Win",
            other: "Fx",
          };
          const f = {
            id,
            type,
            label: labelMap[type] || "Fx",
            width: w,
            depth: d,
            x: (room.length - w) / 2,
            y: (room.width - d) / 2,
          };
          f.x = Math.max(0, Math.min(f.x, room.length - f.width));
          f.y = Math.max(0, Math.min(f.y, room.width - f.depth));
          fixtures.push(f);
          selectedId = f.id;
          rotateFixtureBtn.disabled = false;
          deleteFixtureBtn.disabled = false;
          selectedInfo.textContent = `Selected: ${f.label} (${f.type})`;
          redraw();
          updateSummary();
          checkClearances();
        });

        clearFixturesBtn.addEventListener("click", () => {
          fixtures = [];
          selectedId = null;
          rotateFixtureBtn.disabled = true;
          deleteFixtureBtn.disabled = true;
          selectedInfo.textContent =
            "Click a fixture on the canvas to edit or delete it.";
          redraw();
          updateSummary();
          checkClearances();
        });

        rotateFixtureBtn.addEventListener("click", () => {
          if (!selectedId) return;
          const f = fixtures.find((fi) => fi.id === selectedId);
          if (!f) return;
          const oldWidth = f.width;
          f.width = f.depth;
          f.depth = oldWidth;
          f.x = Math.max(0, Math.min(f.x, room.length - f.width));
          f.y = Math.max(0, Math.min(f.y, room.width - f.depth));
          redraw();
          updateSummary();
          checkClearances();
        });

        deleteFixtureBtn.addEventListener("click", () => {
          if (!selectedId) return;
          fixtures = fixtures.filter((f) => f.id !== selectedId);
          selectedId = null;
          rotateFixtureBtn.disabled = true;
          deleteFixtureBtn.disabled = true;
          selectedInfo.textContent =
            "Click a fixture on the canvas to edit or delete it.";
          redraw();
          updateSummary();
          checkClearances();
        });

        let dragging = false;
        let dragOffset = { x: 0, y: 0 };
        let dragFixtureId = null;

        function getFixtureAtCanvasPos(px, py) {
          const x = (px - margin) / scale;
          const y = (py - margin) / scale;
          for (let i = fixtures.length - 1; i >= 0; i--) {
            const f = fixtures[i];
            if (
              x >= f.x &&
              x <= f.x + f.width &&
              y >= f.y &&
              y <= f.y + f.depth
            ) {
              return f;
            }
          }
          return null;
        }

        canvas.addEventListener("mousedown", (e) => {
          const rect = canvas.getBoundingClientRect();
          const px = e.clientX - rect.left;
          const py = e.clientY - rect.top;
          const f = getFixtureAtCanvasPos(px, py);
          if (f) {
            dragging = true;
            dragFixtureId = f.id;
            dragOffset.x = (px - margin) / scale - f.x;
            dragOffset.y = (py - margin) / scale - f.y;
            selectedId = f.id;
            rotateFixtureBtn.disabled = false;
            deleteFixtureBtn.disabled = false;
            selectedInfo.textContent = `Selected: ${f.label} (${f.type})`;
            redraw();
          } else {
            selectedId = null;
            rotateFixtureBtn.disabled = true;
            deleteFixtureBtn.disabled = true;
            selectedInfo.textContent =
              "Click a fixture on the canvas to edit or delete it.";
            redraw();
          }
        });

        canvas.addEventListener("mousemove", (e) => {
          if (!dragging || dragFixtureId === null) return;
          const rect = canvas.getBoundingClientRect();
          const px = e.clientX - rect.left;
          const py = e.clientY - rect.top;
          const f = fixtures.find((fi) => fi.id === dragFixtureId);
          if (!f) return;
          let newX = (px - margin) / scale - dragOffset.x;
          let newY = (py - margin) / scale - dragOffset.y;
          newX = Math.max(0, Math.min(newX, room.length - f.width));
          newY = Math.max(0, Math.min(newY, room.width - f.depth));
          f.x = newX;
          f.y = newY;
          redraw();
          checkClearances();
        });

        canvas.addEventListener("mouseup", () => {
          dragging = false;
          dragFixtureId = null;
          updateSummary();
        });

        canvas.addEventListener("mouseleave", () => {
          dragging = false;
          dragFixtureId = null;
        });

        canvas.addEventListener(
          "touchstart",
          (e) => {
            const touch = e.touches[0];
            const rect = canvas.getBoundingClientRect();
            const px = touch.clientX - rect.left;
            const py = touch.clientY - rect.top;
            const f = getFixtureAtCanvasPos(px, py);
            if (f) {
              dragging = true;
              dragFixtureId = f.id;
              dragOffset.x = (px - margin) / scale - f.x;
              dragOffset.y = (py - margin) / scale - f.y;
              selectedId = f.id;
              rotateFixtureBtn.disabled = false;
              deleteFixtureBtn.disabled = false;
              selectedInfo.textContent = `Selected: ${f.label} (${f.type})`;
              redraw();
            }
            e.preventDefault();
          },
          { passive: false }
        );

        canvas.addEventListener(
          "touchmove",
          (e) => {
            if (!dragging || dragFixtureId === null) return;
            const touch = e.touches[0];
            const rect = canvas.getBoundingClientRect();
            const px = touch.clientX - rect.left;
            const py = touch.clientY - rect.top;
            const f = fixtures.find((fi) => fi.id === dragFixtureId);
            if (!f) return;
            let newX = (px - margin) / scale - dragOffset.x;
            let newY = (py - margin) / scale - dragOffset.y;
            newX = Math.max(0, Math.min(newX, room.length - f.width));
            newY = Math.max(0, Math.min(newY, room.width - f.depth));
            f.x = newX;
            f.y = newY;
            redraw();
            checkClearances();
            e.preventDefault();
          },
          { passive: false }
        );

        canvas.addEventListener("touchend", () => {
          dragging = false;
          dragFixtureId = null;
          updateSummary();
        });

        // Initial setup
        setFixtureDefaults();
        room = getRoomDimensionsFromInputs();
        updateScale();
        redraw();
        updateSummary();
        checkClearances();
      });
    </script>

