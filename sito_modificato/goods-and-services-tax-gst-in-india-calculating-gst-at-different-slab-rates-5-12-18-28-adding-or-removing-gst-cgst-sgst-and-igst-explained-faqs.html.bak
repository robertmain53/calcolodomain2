    <script>
      // GST Calculator logic
      (function () {
        const amountInput = document.getElementById("amount-input");
        const modeButtons = document.querySelectorAll(".gst-mode-btn");
        const rateButtons = document.querySelectorAll(".gst-rate-btn");
        const taxTypeButtons = document.querySelectorAll(".gst-tax-type-btn");
        const customRateInput = document.getElementById("custom-rate");
        const applyCustomRateBtn = document.getElementById("apply-custom-rate");
        const resetBtn = document.getElementById("gst-reset");

        const modeLabel = document.getElementById("mode-label");
        const baseAmountEl = document.getElementById("base-amount");
        const gstAmountEl = document.getElementById("gst-amount");
        const effectiveRateEl = document.getElementById("effective-rate");
        const totalAmountEl = document.getElementById("total-amount");
        const cgstAmountEl = document.getElementById("cgst-amount");
        const sgstAmountEl = document.getElementById("sgst-amount");
        const igstAmountEl = document.getElementById("igst-amount");
        const intraBreakup = document.getElementById("intra-breakup");
        const interBreakup = document.getElementById("inter-breakup");

        let currentMode = "add"; // 'add' or 'remove'
        let currentRate = 5; // in %
        let currentTaxType = "intra"; // 'intra' or 'inter'

        function formatINR(value) {
          if (isNaN(value)) return "₹0.00";
          return (
            "₹" +
            value.toLocaleString("en-IN", {
              minimumFractionDigits: 2,
              maximumFractionDigits: 2,
            })
          );
        }

        function setActive(buttons, activeButton) {
          buttons.forEach((btn) => {
            if (btn === activeButton) {
              btn.classList.remove(
                "border-gray-300",
                "text-gray-700",
                "bg-white"
              );
              btn.classList.add("border-blue-600", "text-white", "bg-blue-600");
            } else {
              btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
              btn.classList.remove(
                "border-blue-600",
                "text-white",
                "bg-blue-600"
              );
            }
          });
        }

        function recalc() {
          const amount = parseFloat(amountInput.value);
          const r = parseFloat(currentRate);

          if (isNaN(amount) || isNaN(r) || amount < 0) {
            baseAmountEl.textContent = "₹0.00";
            gstAmountEl.textContent = "₹0.00";
            totalAmountEl.textContent = "₹0.00";
            cgstAmountEl.textContent = "₹0.00";
            sgstAmountEl.textContent = "₹0.00";
            igstAmountEl.textContent = "₹0.00";
            effectiveRateEl.textContent = "Effective GST rate: 0.00%";
            return;
          }

          let base, gstAmount, total, effectiveRate;

          if (currentMode === "add") {
            base = amount;
            gstAmount = (base * r) / 100;
            total = base + gstAmount;
            effectiveRate = r;
          } else {
            // remove GST
            base = amount / (1 + r / 100);
            gstAmount = amount - base;
            total = amount;
            effectiveRate = (gstAmount / base) * 100;
          }

          // Split into CGST/SGST or IGST
          let cgst = 0,
            sgst = 0,
            igst = 0;
          if (currentTaxType === "intra") {
            cgst = gstAmount / 2;
            sgst = gstAmount / 2;
            intraBreakup.classList.remove("hidden");
            interBreakup.classList.add("hidden");
          } else {
            igst = gstAmount;
            intraBreakup.classList.add("hidden");
            interBreakup.classList.remove("hidden");
          }

          baseAmountEl.textContent = formatINR(base);
          gstAmountEl.textContent = formatINR(gstAmount);
          totalAmountEl.textContent = formatINR(total);
          cgstAmountEl.textContent = formatINR(cgst);
          sgstAmountEl.textContent = formatINR(sgst);
          igstAmountEl.textContent = formatINR(igst);
          effectiveRateEl.textContent =
            "Effective GST rate: " +
            (isFinite(effectiveRate) ? effectiveRate.toFixed(2) : "0.00") +
            "%";
        }

        // Mode buttons
        modeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentMode = btn.dataset.mode;
            setActive(modeButtons, btn);
            modeLabel.textContent =
              currentMode === "add"
                ? "Add GST to base price"
                : "Remove GST from inclusive price";
            recalc();
          });
        });

        // Rate buttons
        rateButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentRate = parseFloat(btn.dataset.rate);
            setActive(rateButtons, btn);
            recalc();
          });
        });

        // Custom rate
        applyCustomRateBtn.addEventListener("click", () => {
          const val = parseFloat(customRateInput.value);
          if (isNaN(val) || val < 0) {
            alert("Please enter a valid GST rate.");
            return;
          }
          currentRate = val;
          // Clear active styling from preset buttons
          rateButtons.forEach((btn) => {
            btn.classList.add("border-gray-300", "text-gray-700", "bg-white");
            btn.classList.remove(
              "border-blue-600",
              "text-white",
              "bg-blue-600"
            );
          });
          recalc();
        });

        // Tax type buttons
        taxTypeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            currentTaxType = btn.dataset.type;
            setActive(taxTypeButtons, btn);
            recalc();
          });
        });

        // Amount input
        amountInput.addEventListener("input", recalc);

        // Reset
        resetBtn.addEventListener("click", () => {
          amountInput.value = "";
          currentMode = "add";
          currentRate = 5;
          currentTaxType = "intra";
          setActive(modeButtons, modeButtons[0]);
          setActive(rateButtons, rateButtons[0]);
          setActive(taxTypeButtons, taxTypeButtons[0]);
          customRateInput.value = "";
          modeLabel.textContent = "Add GST to base price";
          recalc();
        });

        // Initial calculation
        recalc();
      })();
    </script>

