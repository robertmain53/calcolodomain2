    <script>
      // Simple illustrative limits (user must confirm actual IRS limits)
      const YEAR_LIMITS = {
        2024: {
          sec179Limit: 1200000, // example only
          phaseoutThreshold: 3000000, // example only
          bonusRate: 0.6, // 60% illustrative
        },
        2025: {
          sec179Limit: 1250000, // example only
          phaseoutThreshold: 3100000, // example only
          bonusRate: 0.4, // 40% illustrative
        },
      };

      const assetsBody = document.getElementById("assetsBody");
      const assetResultsBody = document.getElementById("assetResultsBody");
      const addAssetBtn = document.getElementById("addAssetBtn");
      const resetBtn = document.getElementById("resetCalculator");

      const taxYearEl = document.getElementById("taxYear");
      const businessIncomeEl = document.getElementById("businessIncome");

      const summarySec179El = document.getElementById("summarySec179");
      const summaryBonusEl = document.getElementById("summaryBonus");
      const summaryTotalDeductionEl = document.getElementById(
        "summaryTotalDeduction"
      );

      const limitDollarEl = document.getElementById("limitDollar");
      const limitPhaseoutEl = document.getElementById("limitPhaseout");
      const totalQualifyingCostEl = document.getElementById(
        "totalQualifyingCost"
      );
      const limitIncomeEl = document.getElementById("limitIncome");
      const limitAllowedSec179El =
        document.getElementById("limitAllowedSec179");

      let assetIdCounter = 1;

      function formatMoney(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0,
          })
        );
      }

      function addAssetRow(preset = {}) {
        const id = assetIdCounter++;
        const row = document.createElement("tr");
        row.dataset.assetId = id;

        row.innerHTML = `
      <td class="px-2 py-1">
        <input type="text" class="w-40 md:w-48 border rounded-md px-2 py-1 text-xs md:text-sm" value="${
          preset.description || "Equipment " + id
        }">
      </td>
      <td class="px-2 py-1 text-right">
        <input type="number" min="0" step="100" class="w-28 border rounded-md px-2 py-1 text-xs md:text-sm text-right" value="${
          preset.cost || 50000
        }">
      </td>
      <td class="px-2 py-1 text-right">
        <input type="number" min="0" max="100" step="1" class="w-20 border rounded-md px-2 py-1 text-xs md:text-sm text-right" value="${
          preset.businessUse || 100
        }">
      </td>
      <td class="px-2 py-1 text-center">
        <input type="checkbox" ${preset.sec179 === false ? "" : "checked"}>
      </td>
      <td class="px-2 py-1 text-center">
        <input type="checkbox" ${preset.bonus === false ? "" : "checked"}>
      </td>
      <td class="px-2 py-1 text-right">
        <input type="number" min="3" max="20" step="1" class="w-20 border rounded-md px-2 py-1 text-xs md:text-sm text-right" value="${
          preset.classLife || 5
        }">
      </td>
      <td class="px-2 py-1 text-center">
        <button type="button" class="text-red-600 hover:underline text-xs md:text-sm">Remove</button>
      </td>
    `;

        assetsBody.appendChild(row);
      }

      function readAssets() {
        const rows = Array.from(assetsBody.querySelectorAll("tr"));
        return rows.map((row) => {
          const [
            descInput,
            costInput,
            useInput,
            sec179Input,
            bonusInput,
            lifeInput,
          ] = row.querySelectorAll("input");
          const description = descInput.value.trim() || "Asset";
          const cost = parseFloat(costInput.value) || 0;
          const businessUse = Math.min(
            100,
            Math.max(0, parseFloat(useInput.value) || 0)
          );
          const sec179 = sec179Input.checked;
          const bonus = bonusInput.checked;
          const classLife = parseFloat(lifeInput.value) || 5;
          const businessBasis = cost * (businessUse / 100);

          return {
            row,
            description,
            cost,
            businessUse,
            sec179,
            bonus,
            classLife,
            businessBasis,
          };
        });
      }

      function recalc() {
        const year = taxYearEl.value;
        const limits = YEAR_LIMITS[year] || YEAR_LIMITS["2024"];
        const businessIncome = Math.max(
          0,
          parseFloat(businessIncomeEl.value) || 0
        );

        const assets = readAssets();

        const totalQualifyingCost = assets.reduce((sum, a) => sum + a.cost, 0);

        // Section 179 effective limit after phase-out
        let effectiveSec179Limit = limits.sec179Limit;
        if (totalQualifyingCost > limits.phaseoutThreshold) {
          const reduction = totalQualifyingCost - limits.phaseoutThreshold;
          effectiveSec179Limit = Math.max(0, limits.sec179Limit - reduction);
        }

        const totalSec179EligibleBasis = assets
          .filter((a) => a.sec179)
          .reduce((sum, a) => sum + a.businessBasis, 0);

        const maxSec179ByProperty = Math.min(
          effectiveSec179Limit,
          totalSec179EligibleBasis
        );
        const allowableSec179 = Math.min(maxSec179ByProperty, businessIncome);

        // Allocate Section 179 pro-rata
        let sec179AllocatedTotal = 0;
        const assetAllocations = assets.map((a) => {
          let sec179Alloc = 0;
          if (a.sec179 && totalSec179EligibleBasis > 0 && allowableSec179 > 0) {
            sec179Alloc =
              allowableSec179 * (a.businessBasis / totalSec179EligibleBasis);
          }
          sec179Alloc = Math.min(sec179Alloc, a.businessBasis);
          sec179AllocatedTotal += sec179Alloc;
          return {
            ...a,
            sec179Alloc,
          };
        });

        // Bonus depreciation
        let bonusTotal = 0;
        const bonusRate = limits.bonusRate;
        const assetResults = assetAllocations.map((a) => {
          const bonusBasis = Math.max(0, a.businessBasis - a.sec179Alloc);
          let bonusDed = 0;
          if (a.bonus && bonusRate > 0) {
            bonusDed = bonusBasis * bonusRate;
          }
          const remainingBasis = Math.max(0, bonusBasis - bonusDed);
          bonusTotal += bonusDed;
          return {
            ...a,
            bonusBasis,
            bonusDed,
            remainingBasis,
          };
        });

        const totalFirstYear = sec179AllocatedTotal + bonusTotal;

        // Update summary
        summarySec179El.textContent = formatMoney(sec179AllocatedTotal);
        summaryBonusEl.textContent = formatMoney(bonusTotal);
        summaryTotalDeductionEl.textContent = formatMoney(totalFirstYear);

        limitDollarEl.textContent = formatMoney(limits.sec179Limit);
        limitPhaseoutEl.textContent = formatMoney(limits.phaseoutThreshold);
        totalQualifyingCostEl.textContent = formatMoney(totalQualifyingCost);
        limitIncomeEl.textContent = formatMoney(businessIncome);
        limitAllowedSec179El.textContent = formatMoney(allowableSec179);

        // Update per-asset table
        assetResultsBody.innerHTML = "";
        assetResults.forEach((a) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-2 py-1">${a.description}</td>
        <td class="px-2 py-1 text-right">${formatMoney(a.businessBasis)}</td>
        <td class="px-2 py-1 text-right">${formatMoney(a.sec179Alloc)}</td>
        <td class="px-2 py-1 text-right">${formatMoney(a.bonusDed)}</td>
        <td class="px-2 py-1 text-right">${formatMoney(a.remainingBasis)}</td>
      `;
          assetResultsBody.appendChild(tr);
        });
      }

      // Event listeners
      addAssetBtn.addEventListener("click", () => {
        addAssetRow({
          cost: 25000,
          businessUse: 100,
          sec179: true,
          bonus: true,
          classLife: 5,
        });
        recalc();
      });

      assetsBody.addEventListener("input", recalc);
      businessIncomeEl.addEventListener("input", recalc);
      taxYearEl.addEventListener("change", recalc);

      assetsBody.addEventListener("click", (e) => {
        if (e.target.tagName.toLowerCase() === "button") {
          const row = e.target.closest("tr");
          if (row) {
            row.remove();
            recalc();
          }
        }
      });

      resetBtn.addEventListener("click", () => {
        taxYearEl.value = "2024";
        businessIncomeEl.value = 150000;
        assetsBody.innerHTML = "";
        addAssetRow({
          description: "Machine A",
          cost: 60000,
          businessUse: 100,
          sec179: true,
          bonus: true,
          classLife: 5,
        });
        addAssetRow({
          description: "Computer equipment",
          cost: 15000,
          businessUse: 100,
          sec179: true,
          bonus: true,
          classLife: 5,
        });
        recalc();
      });

      // Initialize with a couple of sample assets
      window.addEventListener("DOMContentLoaded", () => {
        assetsBody.innerHTML = "";
        addAssetRow({
          description: "Machine A",
          cost: 60000,
          businessUse: 100,
          sec179: true,
          bonus: true,
          classLife: 5,
        });
        addAssetRow({
          description: "Computer equipment",
          cost: 15000,
          businessUse: 100,
          sec179: true,
          bonus: true,
          classLife: 5,
        });
        recalc();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
