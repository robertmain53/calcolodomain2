    <script>
      // --- DC Income Tax Calculator Logic ---
      // NOTE: Brackets, standard deductions, and exemptions are approximate and for educational use only.

      const dcConfig = {
        // Example brackets for demonstration; should be updated when DC law changes.
        // Each entry: { upTo: number | null, rate: decimal }
        brackets: {
          2024: [
            { upTo: 10000, rate: 0.04 },
            { upTo: 40000, rate: 0.06 },
            { upTo: 60000, rate: 0.065 },
            { upTo: 250000, rate: 0.085 },
            { upTo: 500000, rate: 0.0925 },
            { upTo: null, rate: 0.1075 },
          ],
          2023: [
            { upTo: 10000, rate: 0.04 },
            { upTo: 40000, rate: 0.06 },
            { upTo: 60000, rate: 0.065 },
            { upTo: 250000, rate: 0.085 },
            { upTo: 500000, rate: 0.0925 },
            { upTo: null, rate: 0.1075 },
          ],
        },
        // Approximate standard deduction by filing status
        standardDeduction: {
          2024: {
            single: 13850,
            mfj: 27700,
            mfs: 13850,
            hoh: 20800,
          },
          2023: {
            single: 13850,
            mfj: 27700,
            mfs: 13850,
            hoh: 20800,
          },
        },
        // Approximate personal exemption per taxpayer/dependent
        personalExemptionPerPerson: {
          2024: 2000,
          2023: 2000,
        },
      };

      const $ = (id) => document.getElementById(id);

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function getYear() {
        return parseInt($("tax-year").value, 10);
      }

      function getStatusLabel(value) {
        switch (value) {
          case "single":
            return "Single";
          case "mfj":
            return "Married filing jointly";
          case "mfs":
            return "Married filing separately";
          case "hoh":
            return "Head of household";
          default:
            return "Single";
        }
      }

      function syncAgiInputs(fromSlider) {
        const slider = $("dc-agi-range");
        const input = $("dc-agi");
        if (fromSlider) {
          input.value = slider.value;
        } else {
          const v = parseFloat(input.value) || 0;
          slider.value = Math.min(Math.max(v, slider.min), slider.max);
        }
        $("dc-agi-display").textContent = formatCurrency(
          parseFloat(input.value) || 0
        );
      }

      function toggleItemizedVisibility() {
        const isItemized = $("deduction-itemized").checked;
        $("itemized-wrapper").classList.toggle("hidden", !isItemized);
      }

      function toggleAdvanced() {
        const section = $("advanced-section");
        const btn = $("toggle-advanced");
        const isHidden = section.classList.contains("hidden");
        section.classList.toggle("hidden", !isHidden);
        btn.textContent = isHidden
          ? "Hide advanced options"
          : "Show advanced options";
      }

      function calculateDcTax() {
        const year = getYear();
        const status = $("filing-status").value;
        const agi = Math.max(0, parseFloat($("dc-agi").value) || 0);

        // Deductions
        let deduction = 0;
        if ($("deduction-standard").checked) {
          deduction = dcConfig.standardDeduction[year][status] || 0;
        } else {
          deduction = Math.max(0, parseFloat($("itemized-amount").value) || 0);
        }

        // Personal exemptions (taxpayer + spouse if MFJ/MFS + dependents)
        const dependents = Math.max(
          0,
          parseInt($("num-dependents").value || "0", 10)
        );
        let persons = 1; // taxpayer
        if (status === "mfj" || status === "mfs") persons += 1;
        persons += dependents;
        const exemption =
          persons * (dcConfig.personalExemptionPerPerson[year] || 0);

        const taxableIncome = Math.max(0, agi - deduction - exemption);

        // Credits
        const otherCredits = Math.max(
          0,
          parseFloat($("other-credits").value) || 0
        );

        const brackets = dcConfig.brackets[year];
        let remaining = taxableIncome;
        let lower = 0;
        let taxBeforeCredits = 0;
        let marginalRate = 0;
        const breakdown = [];

        for (const b of brackets) {
          if (remaining <= 0) break;
          const upper = b.upTo === null ? Infinity : b.upTo;
          const amountInBracket = Math.max(
            0,
            Math.min(remaining, upper - lower)
          );
          if (amountInBracket > 0) {
            const taxInBracket = amountInBracket * b.rate;
            taxBeforeCredits += taxInBracket;
            marginalRate = b.rate;
            breakdown.push({
              range: `${formatCurrency(lower)} – ${
                b.upTo === null ? "and above" : formatCurrency(b.upTo)
              }`,
              amount: amountInBracket,
              rate: b.rate,
              tax: taxInBracket,
            });
            remaining -= amountInBracket;
          }
          lower = upper;
        }

        const taxAfterCredits = Math.max(0, taxBeforeCredits - otherCredits);
        const effectiveRate = agi > 0 ? taxAfterCredits / agi : 0;

        // Update UI
        $("result-year").textContent = year;
        $("result-status-label").textContent = getStatusLabel(status);
        $("result-tax").textContent = formatCurrency(taxAfterCredits);
        $("result-taxable").textContent = formatCurrency(taxableIncome);
        $("result-deduction").textContent = formatCurrency(
          deduction + exemption
        );
        $("result-credits").textContent = formatCurrency(otherCredits);
        $("result-marginal").textContent = formatPercent(marginalRate);
        $("result-effective").textContent = formatPercent(effectiveRate);

        const container = $("bracket-breakdown");
        container.innerHTML = "";
        if (breakdown.length === 0) {
          container.innerHTML =
            "<p>No DC income tax due at this income level.</p>";
        } else {
          breakdown.forEach((b) => {
            const div = document.createElement("div");
            div.className = "flex justify-between";
            div.innerHTML = `
          <span>${b.range} @ ${formatPercent(b.rate)}</span>
          <span>${formatCurrency(b.tax)}</span>
        `;
            container.appendChild(div);
          });
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        syncAgiInputs(true);
        toggleItemizedVisibility();
        calculateDcTax();

        $("dc-agi-range").addEventListener("input", () => {
          syncAgiInputs(true);
          calculateDcTax();
        });
        $("dc-agi").addEventListener("input", () => {
          syncAgiInputs(false);
          calculateDcTax();
        });

        $("tax-year").addEventListener("change", calculateDcTax);
        $("filing-status").addEventListener("change", calculateDcTax);

        $("deduction-standard").addEventListener("change", () => {
          toggleItemizedVisibility();
          calculateDcTax();
        });
        $("deduction-itemized").addEventListener("change", () => {
          toggleItemizedVisibility();
          calculateDcTax();
        });
        $("itemized-amount").addEventListener("input", calculateDcTax);

        $("num-dependents").addEventListener("input", calculateDcTax);
        $("other-credits").addEventListener("input", calculateDcTax);

        $("toggle-advanced").addEventListener("click", toggleAdvanced);
        $("calculate-btn").addEventListener("click", calculateDcTax);
      });

      // Mobile menu script (from template)
      document.addEventListener("DOMContentLoaded", function () {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", String(isHidden));
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
