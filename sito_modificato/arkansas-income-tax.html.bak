    <script>
      // Simple Arkansas tax model (illustrative only, not official)
      const AR_STANDARD_DEDUCTION = {
        single: 2400,
        mfj: 4800,
        mfs: 2400,
        hoh: 2400,
      };

      // Example progressive brackets for Arkansas (for demonstration)
      // Each entry: { upTo: amount, rate: decimal }
      const AR_BRACKETS = [
        { upTo: 5000, rate: 0.02 },
        { upTo: 10000, rate: 0.04 },
        { upTo: Infinity, rate: 0.049 },
      ];

      function formatCurrency(value) {
        if (!isFinite(value)) return "$0";
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1) + "%";
      }

      function calculateArkansasTax(taxableIncome) {
        let remaining = Math.max(0, taxableIncome);
        let tax = 0;
        let lastCap = 0;

        for (const bracket of AR_BRACKETS) {
          if (remaining <= 0) break;
          const cap = bracket.upTo;
          const amountInBracket = Math.min(remaining, cap - lastCap);
          if (amountInBracket > 0) {
            tax += amountInBracket * bracket.rate;
            remaining -= amountInBracket;
          }
          lastCap = cap;
        }
        return Math.max(0, tax);
      }

      function getFilingStatusLabel(value) {
        switch (value) {
          case "single":
            return "Single";
          case "mfj":
            return "Married filing jointly";
          case "mfs":
            return "Married filing separately";
          case "hoh":
            return "Head of household";
          default:
            return "Single";
        }
      }

      function runCalculation() {
        const income = parseFloat(document.getElementById("income").value) || 0;
        const deductionsInput =
          parseFloat(document.getElementById("deductions").value) || 0;
        const credits = Math.max(
          0,
          parseFloat(document.getElementById("credits").value) || 0
        );
        const withholding = Math.max(
          0,
          parseFloat(document.getElementById("withholding").value) || 0
        );
        const year = document.getElementById("taxYear").value;

        const status = document.querySelector(
          'input[name="filingStatus"]:checked'
        ).value;
        const standardDeduction =
          AR_STANDARD_DEDUCTION[status] || AR_STANDARD_DEDUCTION.single;

        const deductionUsed =
          deductionsInput > 0 ? deductionsInput : standardDeduction;

        const taxableAfterDeduction = Math.max(0, income - deductionUsed);
        const grossTax = calculateArkansasTax(taxableAfterDeduction);
        const netTax = Math.max(0, grossTax - credits);
        const effectiveRate = income > 0 ? netTax / income : 0;
        const afterTaxIncome = income - netTax;
        const refund = withholding - netTax; // positive = refund, negative = amount owed

        // Update main results
        document.getElementById("result-tax").textContent =
          formatCurrency(netTax);
        document.getElementById("result-effective-rate").textContent =
          formatPercent(effectiveRate);
        document.getElementById("result-after-tax").textContent =
          formatCurrency(afterTaxIncome);

        const refundEl = document.getElementById("result-refund");
        refundEl.textContent = formatCurrency(Math.abs(refund));
        refundEl.classList.remove("text-green-700", "text-red-700");
        refundEl.classList.add(refund >= 0 ? "text-green-700" : "text-red-700");

        // Update breakdown
        document.getElementById("breakdown-year").textContent = year;
        document.getElementById("breakdown-status").textContent =
          getFilingStatusLabel(status);
        document.getElementById("breakdown-income").textContent =
          formatCurrency(income);
        document.getElementById("breakdown-deduction").textContent =
          formatCurrency(deductionUsed);
        document.getElementById(
          "breakdown-taxable-after-deduction"
        ).textContent = formatCurrency(taxableAfterDeduction);
        document.getElementById("breakdown-gross-tax").textContent =
          formatCurrency(grossTax);
        document.getElementById("breakdown-credits").textContent =
          formatCurrency(credits);
        document.getElementById("breakdown-net-tax").textContent =
          formatCurrency(netTax);
      }

      document.addEventListener("DOMContentLoaded", () => {
        const yearSlider = document.getElementById("taxYear");
        const yearLabel = document.getElementById("taxYearLabel");
        yearSlider.addEventListener("input", () => {
          yearLabel.textContent = yearSlider.value;
        });

        document
          .getElementById("calculateBtn")
          .addEventListener("click", runCalculation);

        // Recalculate on key inputs change for better UX
        ["income", "deductions", "credits", "withholding"].forEach((id) => {
          document
            .getElementById(id)
            .addEventListener("change", runCalculation);
        });
        document.querySelectorAll('input[name="filingStatus"]').forEach((r) => {
          r.addEventListener("change", runCalculation);
        });
        yearSlider.addEventListener("change", runCalculation);

        // Initial calculation
        runCalculation();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
