    <script>
      // Utility: clamp and safe parse
      function parseVal(id) {
        const v = parseFloat(
          document.getElementById(id).value.replace(",", ".")
        );
        return isNaN(v) ? null : v;
      }

      function round(val, digits = 1) {
        const m = Math.pow(10, digits);
        return Math.round(val * m) / m;
      }

      // Unit handling
      let currentUnit = "mgdl"; // 'mgdl' or 'mmol'

      function updateUnitLabels() {
        const isMmol = currentUnit === "mmol";
        document.getElementById("totalChol-unit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("hdl-unit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("trig-unit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("ldlLab-unit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("ldlCalcUnit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("nonHdlUnit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
        document.getElementById("trigDisplayUnit").textContent = isMmol
          ? "mmol/L"
          : "mg/dL";
      }

      function convertChol(val, fromUnit, toUnit) {
        if (val == null) return null;
        if (fromUnit === toUnit) return val;
        // mg/dL <-> mmol/L for cholesterol
        if (fromUnit === "mgdl" && toUnit === "mmol") return val / 38.67;
        if (fromUnit === "mmol" && toUnit === "mgdl") return val * 38.67;
        return val;
      }

      function convertTrig(val, fromUnit, toUnit) {
        if (val == null) return null;
        if (fromUnit === toUnit) return val;
        // mg/dL <-> mmol/L for triglycerides
        if (fromUnit === "mgdl" && toUnit === "mmol") return val / 88.57;
        if (fromUnit === "mmol" && toUnit === "mgdl") return val * 88.57;
        return val;
      }

      function switchUnits(newUnit) {
        if (newUnit === currentUnit) return;
        const oldUnit = currentUnit;
        currentUnit = newUnit;

        // Convert existing values
        const idsChol = ["totalChol", "hdl", "ldlLab"];
        idsChol.forEach((id) => {
          const v = parseVal(id);
          if (v != null) {
            const converted = convertChol(v, oldUnit, newUnit);
            document.getElementById(id).value =
              converted !== null ? round(converted, 2) : "";
          }
        });
        const trigVal = parseVal("trig");
        if (trigVal != null) {
          const convertedTrig = convertTrig(trigVal, oldUnit, newUnit);
          document.getElementById("trig").value =
            convertedTrig !== null ? round(convertedTrig, 2) : "";
        }

        updateUnitLabels();

        // Recalculate if results visible
        if (
          !document
            .getElementById("resultsSection")
            .classList.contains("hidden")
        ) {
          calculateCholesterol();
        }
      }

      document.getElementById("unit-mgdl").addEventListener("click", () => {
        document
          .getElementById("unit-mgdl")
          .classList.add("bg-blue-600", "text-white");
        document
          .getElementById("unit-mmol")
          .classList.remove("bg-blue-600", "text-white");
        document
          .getElementById("unit-mgdl")
          .setAttribute("aria-pressed", "true");
        document
          .getElementById("unit-mmol")
          .setAttribute("aria-pressed", "false");
        switchUnits("mgdl");
      });

      document.getElementById("unit-mmol").addEventListener("click", () => {
        document
          .getElementById("unit-mmol")
          .classList.add("bg-blue-600", "text-white");
        document
          .getElementById("unit-mgdl")
          .classList.remove("bg-blue-600", "text-white");
        document
          .getElementById("unit-mmol")
          .setAttribute("aria-pressed", "true");
        document
          .getElementById("unit-mgdl")
          .setAttribute("aria-pressed", "false");
        switchUnits("mmol");
      });

      // Risk interpretation helpers (assume mg/dL internally)
      function ldlCategory(ldl) {
        if (ldl == null) return null;
        if (ldl < 100) return { label: "Optimal LDL", color: "text-green-700" };
        if (ldl < 130)
          return { label: "Near optimal LDL", color: "text-emerald-700" };
        if (ldl < 160)
          return { label: "Borderline high LDL", color: "text-amber-700" };
        if (ldl < 190) return { label: "High LDL", color: "text-orange-700" };
        return { label: "Very high LDL", color: "text-red-700" };
      }

      function nonHdlCategory(nonHdl) {
        if (nonHdl == null) return null;
        if (nonHdl < 130)
          return {
            label: "Desirable non‑HDL cholesterol",
            color: "text-green-700",
          };
        if (nonHdl < 160)
          return { label: "Borderline high non‑HDL", color: "text-amber-700" };
        if (nonHdl < 190)
          return { label: "High non‑HDL", color: "text-orange-700" };
        return { label: "Very high non‑HDL", color: "text-red-700" };
      }

      function ratioCategoryTcHdl(ratio) {
        if (ratio == null) return null;
        if (ratio < 4)
          return {
            label: "Favorable total/HDL ratio",
            color: "text-green-700",
          };
        if (ratio < 5)
          return {
            label: "Borderline total/HDL ratio",
            color: "text-amber-700",
          };
        return { label: "High total/HDL ratio", color: "text-red-700" };
      }

      function ratioCategoryLdlHdl(ratio) {
        if (ratio == null) return null;
        if (ratio < 2.5)
          return { label: "Favorable LDL/HDL ratio", color: "text-green-700" };
        if (ratio < 3.5)
          return { label: "Borderline LDL/HDL ratio", color: "text-amber-700" };
        return { label: "High LDL/HDL ratio", color: "text-red-700" };
      }

      function trigCategory(tg) {
        if (tg == null) return null;
        if (tg < 150)
          return { label: "Normal triglycerides", color: "text-green-700" };
        if (tg < 200)
          return {
            label: "Borderline high triglycerides",
            color: "text-amber-700",
          };
        if (tg < 500)
          return { label: "High triglycerides", color: "text-orange-700" };
        return {
          label: "Very high triglycerides (pancreatitis risk)",
          color: "text-red-700",
        };
      }

      function riskTargetText(ldlMg, nonHdlMg, context) {
        let text = "";
        if (ldlMg == null || nonHdlMg == null) return text;
        if (context === "low") {
          text =
            "For many people at low–moderate cardiovascular risk, common targets are LDL < 130 mg/dL and non‑HDL < 160 mg/dL, with more aggressive goals if other risk factors are present.";
        } else if (context === "high") {
          text =
            "In high‑risk patients (for example with diabetes), guidelines often aim for LDL < 100 mg/dL and non‑HDL < 130 mg/dL, or even lower depending on overall risk.";
        } else {
          text =
            "In very high‑risk patients with established ASCVD, many guidelines recommend LDL < 70 mg/dL and non‑HDL < 100 mg/dL, sometimes even lower.";
        }
        return text;
      }

      function calculateCholesterol() {
        const inputError = document.getElementById("inputError");
        inputError.classList.add("hidden");
        inputError.textContent = "";

        let tc = parseVal("totalChol");
        let hdl = parseVal("hdl");
        let tg = parseVal("trig");
        let ldlLab = parseVal("ldlLab");

        if (tc == null || hdl == null || tg == null) {
          inputError.textContent =
            "Please enter at least Total Cholesterol, HDL, and Triglycerides.";
          inputError.classList.remove("hidden");
          return;
        }
        if (tc <= 0 || hdl <= 0 || tg < 0) {
          inputError.textContent =
            "Values must be positive. HDL cannot be zero.";
          inputError.classList.remove("hidden");
          return;
        }

        // Convert to mg/dL for internal calculations
        const tcMg =
          currentUnit === "mgdl" ? tc : convertChol(tc, "mmol", "mgdl");
        const hdlMg =
          currentUnit === "mgdl" ? hdl : convertChol(hdl, "mmol", "mgdl");
        const tgMg =
          currentUnit === "mgdl" ? tg : convertTrig(tg, "mmol", "mgdl");
        const ldlLabMg =
          ldlLab != null
            ? currentUnit === "mgdl"
              ? ldlLab
              : convertChol(ldlLab, "mmol", "mgdl")
            : null;

        const method = document.querySelector(
          'input[name="ldlMethod"]:checked'
        ).value;
        let ldlCalcMg = null;
        let methodLabel = "";

        if (method === "friedewald") {
          ldlCalcMg = tcMg - hdlMg - tgMg / 5;
          methodLabel = "Friedewald formula: LDL = TC − HDL − TG/5 (mg/dL).";
        } else {
          // Martin/extended approximation with adaptive divisor
          let d = 5;
          if (tgMg < 100) d = 6;
          else if (tgMg < 150) d = 5;
          else if (tgMg < 200) d = 4.5;
          else if (tgMg < 300) d = 4;
          else d = 3.5;
          ldlCalcMg = tcMg - hdlMg - tgMg / d;
          methodLabel =
            "Martin/extended approximation: LDL = TC − HDL − TG/d, where d varies with triglycerides.";
        }

        // Non-HDL
        const nonHdlMg = tcMg - hdlMg;

        // Ratios
        const tcHdlRatio = tcMg / hdlMg;
        const ldlHdlRatio = ldlCalcMg / hdlMg;

        // Display values in current unit
        const ldlDisplay =
          currentUnit === "mgdl"
            ? ldlCalcMg
            : convertChol(ldlCalcMg, "mgdl", "mmol");
        const nonHdlDisplay =
          currentUnit === "mgdl"
            ? nonHdlMg
            : convertChol(nonHdlMg, "mgdl", "mmol");
        const tgDisplay =
          currentUnit === "mgdl" ? tgMg : convertTrig(tgMg, "mgdl", "mmol");

        document.getElementById("ldlCalcValue").textContent = isFinite(
          ldlDisplay
        )
          ? round(ldlDisplay, 1)
          : "–";
        document.getElementById("nonHdlValue").textContent = isFinite(
          nonHdlDisplay
        )
          ? round(nonHdlDisplay, 1)
          : "–";
        document.getElementById("trigDisplay").textContent = isFinite(tgDisplay)
          ? round(tgDisplay, 1)
          : "–";
        document.getElementById("tcHdlRatio").textContent = isFinite(tcHdlRatio)
          ? round(tcHdlRatio, 2)
          : "–";
        document.getElementById("ldlHdlRatio").textContent = isFinite(
          ldlHdlRatio
        )
          ? round(ldlHdlRatio, 2)
          : "–";

        document.getElementById("ldlMethodLabel").textContent = methodLabel;

        // Risk labels
        const ldlCat = ldlCategory(ldlCalcMg);
        const nonHdlCat = nonHdlCategory(nonHdlMg);
        const tcHdlCat = ratioCategoryTcHdl(tcHdlRatio);
        const ldlHdlCat = ratioCategoryLdlHdl(ldlHdlRatio);
        const tgCat = trigCategory(tgMg);

        const ldlRiskLabel = document.getElementById("ldlRiskLabel");
        const nonHdlRiskLabel = document.getElementById("nonHdlRiskLabel");
        const tcHdlRiskLabel = document.getElementById("tcHdlRiskLabel");
        const ldlHdlRiskLabel = document.getElementById("ldlHdlRiskLabel");
        const trigRiskLabel = document.getElementById("trigRiskLabel");

        [
          ldlRiskLabel,
          nonHdlRiskLabel,
          tcHdlRiskLabel,
          ldlHdlRiskLabel,
          trigRiskLabel,
        ].forEach((el) => {
          el.textContent = "";
          el.className = "mt-1 text-xs";
        });

        if (ldlCat) {
          ldlRiskLabel.textContent = ldlCat.label;
          ldlRiskLabel.classList.add(ldlCat.color);
        }
        if (nonHdlCat) {
          nonHdlRiskLabel.textContent = nonHdlCat.label;
          nonHdlRiskLabel.classList.add(nonHdlCat.color);
        }
        if (tcHdlCat) {
          tcHdlRiskLabel.textContent = tcHdlCat.label;
          tcHdlRiskLabel.classList.add(tcHdlCat.color);
        }
        if (ldlHdlCat) {
          ldlHdlRiskLabel.textContent = ldlHdlCat.label;
          ldlHdlRiskLabel.classList.add(ldlHdlCat.color);
        }
        if (tgCat) {
          trigRiskLabel.textContent = tgCat.label;
          trigRiskLabel.classList.add(tgCat.color);
        }

        // Lab vs calculated LDL comparison
        const comparisonBox = document.getElementById("ldlComparisonBox");
        if (ldlLabMg != null && isFinite(ldlCalcMg)) {
          const ldlLabDisplay =
            currentUnit === "mgdl"
              ? ldlLabMg
              : convertChol(ldlLabMg, "mgdl", "mmol");
          document.getElementById("ldlLabDisplay").textContent =
            round(ldlLabDisplay, 1) +
            " " +
            (currentUnit === "mgdl" ? "mg/dL" : "mmol/L");
          document.getElementById("ldlCalcDisplay").textContent =
            round(ldlDisplay, 1) +
            " " +
            (currentUnit === "mgdl" ? "mg/dL" : "mmol/L");

          const diff = ldlCalcMg - ldlLabMg;
          const absDiff = Math.abs(diff);
          let msg = "Calculated LDL is close to the lab‑measured value.";
          if (absDiff > 10) {
            msg =
              "Calculated LDL differs from the lab‑measured value by about " +
              Math.round(absDiff) +
              " mg/dL. Differences can occur due to formulas, rounding, and lab methods.";
          }
          document.getElementById("ldlDiffLabel").textContent = msg;
          comparisonBox.classList.remove("hidden");
        } else {
          comparisonBox.classList.add("hidden");
        }

        // Warnings
        const warningBox = document.getElementById("warningBox");
        const warningText = document.getElementById("warningText");
        warningText.textContent = "";
        warningBox.classList.add("hidden");

        if (tgMg >= 400) {
          warningText.textContent =
            "Triglycerides are very high (≥ 400 mg/dL). Calculated LDL may be unreliable. A direct LDL measurement or apolipoprotein B may be more appropriate—discuss this with your clinician.";
          warningBox.classList.remove("hidden");
        }

        // Contextual target text appended to LDL box
        const context = document.getElementById("riskCategory").value;
        const targetText = riskTargetText(ldlCalcMg, nonHdlMg, context);
        if (targetText) {
          const extra = document.createElement("p");
          extra.className = "mt-2 text-xs text-gray-600";
          extra.textContent = targetText;
          // Clear previous extra text
          const ldlBox = document.querySelector(
            "#resultsSection .border.rounded-lg.p-4.bg-slate-50"
          );
          const oldExtras = ldlBox.querySelectorAll(
            ".mt-2.text-xs.text-gray-600"
          );
          oldExtras.forEach((e) => e.remove());
          ldlBox.appendChild(extra);
        }

        document.getElementById("resultsSection").classList.remove("hidden");
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", calculateCholesterol);

      // Recalculate on Enter key in any input
      ["totalChol", "hdl", "trig", "ldlLab"].forEach((id) => {
        document.getElementById(id).addEventListener("keydown", (e) => {
          if (e.key === "Enter") {
            e.preventDefault();
            calculateCholesterol();
          }
        });
      });

      // Initialize labels
      updateUnitLabels();
    </script>

