    <script>
      // Utility: parse comma-separated coefficients into array of numbers
      function parseCoeff(str) {
        if (!str.trim()) return null;
        return str
          .split(",")
          .map(function (v) {
            return parseFloat(v.trim());
          })
          .filter(function (v) {
            return !isNaN(v);
          });
      }

      // Evaluate polynomial with real coefficients at complex s using Horner's method
      function evalPoly(coeffs, s) {
        var re = 0,
          im = 0;
        for (var i = 0; i < coeffs.length; i++) {
          var c = coeffs[i];
          // (re + j im) * s
          var nre = re * s.re - im * s.im;
          var nim = re * s.im + im * s.re;
          re = nre + c;
          im = nim;
        }
        return { re: re, im: im };
      }

      // Complex utilities
      function cAdd(a, b) {
        return { re: a.re + b.re, im: a.im + b.im };
      }
      function cSub(a, b) {
        return { re: a.re - b.re, im: a.im - b.im };
      }
      function cMul(a, b) {
        return { re: a.re * b.re - a.im * b.im, im: a.re * b.im + a.im * b.re };
      }
      function cDiv(a, b) {
        var den = b.re * b.re + b.im * b.im;
        return {
          re: (a.re * b.re + a.im * b.im) / den,
          im: (a.im * b.re - a.re * b.im) / den,
        };
      }
      function cAbs(a) {
        return Math.sqrt(a.re * a.re + a.im * a.im);
      }
      function cArg(a) {
        return Math.atan2(a.im, a.re);
      }

      function parseComplex(str) {
        str = str.trim();
        if (!str) return null;
        // Simple forms: a, a+bi, a-bi, +bi, -bi
        var re = 0,
          im = 0;
        if (str.indexOf("i") === -1) {
          re = parseFloat(str);
          if (isNaN(re)) return null;
          return { re: re, im: 0 };
        }
        // Remove spaces
        str = str.replace(/\s+/g, "");
        // Handle pure imaginary: "bi"
        if (/^[+-]?\d*\.?\d*i$/.test(str)) {
          var coeff = str.replace("i", "");
          if (coeff === "" || coeff === "+") coeff = "1";
          if (coeff === "-") coeff = "-1";
          im = parseFloat(coeff);
          if (isNaN(im)) return null;
          return { re: 0, im: im };
        }
        // General a+bi or a-bi
        var match = str.match(/^([+-]?\d*\.?\d*)([+-]\d*\.?\d*)i$/);
        if (!match) return null;
        re = parseFloat(match[1]);
        im = parseFloat(match[2]);
        if (isNaN(re) || isNaN(im)) return null;
        return { re: re, im: im };
      }

      function generateLogFrequencies(wMin, wMax, pointsPerDecade) {
        var decades = Math.log10(wMax) - Math.log10(wMin);
        var n = Math.max(10, Math.round(decades * pointsPerDecade));
        var freqs = [];
        var logMin = Math.log10(wMin);
        var step = (Math.log10(wMax) - logMin) / (n - 1);
        for (var i = 0; i < n; i++) {
          freqs.push(Math.pow(10, logMin + i * step));
        }
        return freqs;
      }

      // Build H(s) from TF mode
      function buildHFromTF(numCoeff, denCoeff, tfExpr) {
        if (numCoeff && denCoeff) {
          return function (s) {
            var num = evalPoly(numCoeff, s);
            var den = evalPoly(denCoeff, s);
            return cDiv(num, den);
          };
        }
        // Fallback: very simple parser for expressions in s using eval with safeguards
        if (!tfExpr || !tfExpr.trim()) return null;
        var expr = tfExpr.replace(/S/g, "s").replace(/ /g, "");
        // Disallow dangerous characters
        if (/[^0-9s\+\-\*\/\^\.\(\)]/i.test(expr)) return null;
        // Replace ^ with ** for JS exponent
        expr = expr.replace(/\^/g, "**");
        try {
          var fn = new Function("s", "with(Math){ return " + expr + "; }");
          return function (s) {
            var val = fn({ re: s.re, im: s.im });
            // If user wrote purely real expression in terms of s, we can't easily parse; return null
            if (typeof val === "number") {
              return { re: val, im: 0 };
            }
            if (
              val &&
              typeof val.re === "number" &&
              typeof val.im === "number"
            ) {
              return val;
            }
            return null;
          };
        } catch (e) {
          return null;
        }
      }

      // Build H(s) from ZPK mode
      function buildHFromZPK(zeros, poles, gain) {
        return function (s) {
          var num = { re: gain, im: 0 };
          var den = { re: 1, im: 0 };
          zeros.forEach(function (z) {
            num = cMul(num, cSub(s, z));
          });
          poles.forEach(function (p) {
            den = cMul(den, cSub(s, p));
          });
          return cDiv(num, den);
        };
      }

      var magChart, phaseChart;

      function createOrUpdateCharts(freqs, mags, phases) {
        var labels = freqs.map(function (w) {
          return w;
        });

        var magCtx = document.getElementById("mag-canvas").getContext("2d");
        var phaseCtx = document.getElementById("phase-canvas").getContext("2d");

        var commonOptions = {
          responsive: true,
          maintainAspectRatio: false,
          interaction: { mode: "nearest", intersect: false },
          plugins: {
            legend: { display: false },
            tooltip: {
              callbacks: {
                title: function (items) {
                  var idx = items[0].dataIndex;
                  return "ω = " + labels[idx].toExponential(3) + " rad/s";
                },
              },
            },
          },
          scales: {
            x: {
              type: "logarithmic",
              title: { display: true, text: "Frequency ω (rad/s)" },
              ticks: {
                callback: function (val, index, ticks) {
                  return Number(val).toExponential(0);
                },
              },
            },
          },
        };

        if (magChart) magChart.destroy();
        if (phaseChart) phaseChart.destroy();

        magChart = new Chart(magCtx, {
          type: "line",
          data: {
            labels: labels,
            datasets: [
              {
                data: mags,
                borderColor: "#2563eb",
                backgroundColor: "rgba(37,99,235,0.1)",
                pointRadius: 0,
                borderWidth: 2,
              },
            ],
          },
          options: Object.assign({}, commonOptions, {
            scales: Object.assign({}, commonOptions.scales, {
              y: {
                title: { display: true, text: "Magnitude (dB)" },
              },
            }),
          }),
        });

        phaseChart = new Chart(phaseCtx, {
          type: "line",
          data: {
            labels: labels,
            datasets: [
              {
                data: phases,
                borderColor: "#16a34a",
                backgroundColor: "rgba(22,163,74,0.1)",
                pointRadius: 0,
                borderWidth: 2,
              },
            ],
          },
          options: Object.assign({}, commonOptions, {
            scales: Object.assign({}, commonOptions.scales, {
              y: {
                title: { display: true, text: "Phase (degrees)" },
              },
            }),
          }),
        });
      }

      function downloadChart(chart, filename) {
        if (!chart) return;
        var link = document.createElement("a");
        link.href = chart.toBase64Image();
        link.download = filename;
        link.click();
      }

      document.addEventListener("DOMContentLoaded", function () {
        var modeTFBtn = document.getElementById("mode-tf");
        var modeZPKBtn = document.getElementById("mode-zpk");
        var tfMode = document.getElementById("tf-mode");
        var zpkMode = document.getElementById("zpk-mode");
        var errorMsg = document.getElementById("error-msg");

        function setMode(mode) {
          if (mode === "tf") {
            tfMode.classList.remove("hidden");
            zpkMode.classList.add("hidden");
            modeTFBtn.classList.add("bg-blue-600", "text-white");
            modeTFBtn.classList.remove("bg-gray-100", "text-gray-700");
            modeZPKBtn.classList.remove("bg-blue-600", "text-white");
            modeZPKBtn.classList.add("bg-gray-100", "text-gray-700");
          } else {
            tfMode.classList.add("hidden");
            zpkMode.classList.remove("hidden");
            modeZPKBtn.classList.add("bg-blue-600", "text-white");
            modeZPKBtn.classList.remove("bg-gray-100", "text-gray-700");
            modeTFBtn.classList.remove("bg-blue-600", "text-white");
            modeTFBtn.classList.add("bg-gray-100", "text-gray-700");
          }
          errorMsg.textContent = "";
        }

        modeTFBtn.addEventListener("click", function () {
          setMode("tf");
        });
        modeZPKBtn.addEventListener("click", function () {
          setMode("zpk");
        });

        document
          .getElementById("example-btn")
          .addEventListener("click", function () {
            // Example: 2nd-order low-pass with wn=10, zeta=0.7
            document.getElementById("tf-input").value =
              "(100)/(s^2 + 14*s + 100)";
            document.getElementById("num-coeff").value = "100";
            document.getElementById("den-coeff").value = "1, 14, 100";
            document.getElementById("w-min").value = "0.1";
            document.getElementById("w-max").value = "1000";
            document.getElementById("points-per-decade").value = "80";
            setMode("tf");
            errorMsg.textContent =
              'Example loaded. Click "Generate Bode Plot".';
            errorMsg.classList.remove("text-red-600");
            errorMsg.classList.add("text-blue-600");
          });

        document
          .getElementById("plot-btn")
          .addEventListener("click", function () {
            errorMsg.textContent = "";
            errorMsg.classList.remove("text-blue-600");
            errorMsg.classList.add("text-red-600");

            var wMin = parseFloat(document.getElementById("w-min").value);
            var wMax = parseFloat(document.getElementById("w-max").value);
            var ppd = parseInt(
              document.getElementById("points-per-decade").value,
              10
            );

            if (!(wMin > 0) || !(wMax > wMin)) {
              errorMsg.textContent =
                "Frequency range must satisfy 0 < ωmin < ωmax.";
              return;
            }
            if (!(ppd >= 5 && ppd <= 200)) {
              errorMsg.textContent =
                "Points per decade should be between 5 and 200.";
              return;
            }

            var mode = tfMode.classList.contains("hidden") ? "zpk" : "tf";
            var H;

            if (mode === "tf") {
              var tfExpr = document.getElementById("tf-input").value;
              var numCoeff = parseCoeff(
                document.getElementById("num-coeff").value || ""
              );
              var denCoeff = parseCoeff(
                document.getElementById("den-coeff").value || ""
              );
              H = buildHFromTF(numCoeff, denCoeff, tfExpr);
              if (!H) {
                errorMsg.textContent =
                  "Could not parse transfer function. Check coefficients or expression.";
                return;
              }
            } else {
              var zerosStr = document.getElementById("zeros-input").value;
              var polesStr = document.getElementById("poles-input").value;
              var gainVal = parseFloat(
                document.getElementById("gain-input").value || "1"
              );

              if (isNaN(gainVal)) {
                errorMsg.textContent = "Gain K must be a real number.";
                return;
              }

              var zeros = [];
              var poles = [];

              if (zerosStr.trim()) {
                var zParts = zerosStr.split(",");
                for (var i = 0; i < zParts.length; i++) {
                  var zc = parseComplex(zParts[i]);
                  if (!zc) {
                    errorMsg.textContent =
                      'Could not parse zero: "' + zParts[i].trim() + '".';
                    return;
                  }
                  zeros.push(zc);
                }
              }

              if (polesStr.trim()) {
                var pParts = polesStr.split(",");
                for (var j = 0; j < pParts.length; j++) {
                  var pc = parseComplex(pParts[j]);
                  if (!pc) {
                    errorMsg.textContent =
                      'Could not parse pole: "' + pParts[j].trim() + '".';
                    return;
                  }
                  poles.push(pc);
                }
              }

              if (poles.length === 0 && zeros.length === 0) {
                errorMsg.textContent =
                  "Enter at least one pole, zero, or a non-unit gain.";
                return;
              }

              H = buildHFromZPK(zeros, poles, gainVal);
            }

            var freqs = generateLogFrequencies(wMin, wMax, ppd);
            var mags = [];
            var phases = [];

            for (var k = 0; k < freqs.length; k++) {
              var w = freqs[k];
              var s = { re: 0, im: w }; // s = jω
              var h = H(s);
              if (!h || !isFinite(h.re) || !isFinite(h.im)) {
                errorMsg.textContent =
                  "Numerical error evaluating H(jω). Check your transfer function.";
                return;
              }
              var mag = cAbs(h);
              var phase = (cArg(h) * 180) / Math.PI;
              mags.push(20 * Math.log10(mag));
              phases.push(phase);
            }

            createOrUpdateCharts(freqs, mags, phases);
            errorMsg.textContent = "Bode plot generated.";
            errorMsg.classList.remove("text-red-600");
            errorMsg.classList.add("text-green-600");
          });

        document
          .getElementById("download-mag")
          .addEventListener("click", function () {
            downloadChart(magChart, "bode-magnitude.png");
          });
        document
          .getElementById("download-phase")
          .addEventListener("click", function () {
            downloadChart(phaseChart, "bode-phase.png");
          });
      });

