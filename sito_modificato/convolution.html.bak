    <script>
      // Simple tab switching for calculator/notes
      (function () {
        const tabDiscrete = document.getElementById("tab-discrete");
        const tabNotes = document.getElementById("tab-notes");
        const panelDiscrete = document.getElementById("panel-discrete");
        const panelNotes = document.getElementById("panel-notes");

        function activate(name) {
          const discreteActive = name === "discrete";
          tabDiscrete.classList.toggle("tab-active", discreteActive);
          tabDiscrete.classList.toggle("tab-inactive", !discreteActive);
          tabNotes.classList.toggle("tab-active", !discreteActive);
          tabNotes.classList.toggle("tab-inactive", discreteActive);

          panelDiscrete.classList.toggle("hidden", !discreteActive);
          panelNotes.classList.toggle("hidden", discreteActive);
        }

        tabDiscrete.addEventListener("click", function () {
          activate("discrete");
        });
        tabNotes.addEventListener("click", function () {
