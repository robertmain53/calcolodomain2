    <script>
      // Forex calculator logic
      function getPipSize(pair, override) {
        if (override && override > 0) return override;
        // JPY pairs: 0.01, others: 0.0001
        return pair.includes("JPY") ? 0.01 : 0.0001;
      }

      function formatMoney(value, currency) {
        if (!isFinite(value)) return "–";
        const abs = Math.abs(value);
        const decimals = abs >= 1000 ? 2 : 4;
        return new Intl.NumberFormat("en-US", {
          style: "currency",
          currency: currency || "USD",
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        }).format(value);
      }

      function formatNumber(value, decimals = 2) {
        if (!isFinite(value)) return "–";
        return value.toLocaleString("en-US", {
          minimumFractionDigits: decimals,
          maximumFractionDigits: decimals,
        });
      }

      function calculateForex() {
        const accountCurrency =
          document.getElementById("accountCurrency").value;
        const balance = parseFloat(
          document.getElementById("accountBalance").value
        );
        const riskPercent = parseFloat(
          document.getElementById("riskPercent").value
        );
        const pair = document.getElementById("pair").value;
        const entry = parseFloat(document.getElementById("entryPrice").value);
        const stop = parseFloat(document.getElementById("stopPrice").value);
        const tp = parseFloat(document.getElementById("tpPrice").value);
        const direction = document.getElementById("direction").value;
        const leverage = parseFloat(document.getElementById("leverage").value);
        const pipOverride = parseFloat(
          document.getElementById("pipSizeOverride").value
        );

        const errorEl = document.getElementById("errorMsg");
        errorEl.classList.add("hidden");
        errorEl.textContent = "";

        if (!(balance > 0) || !(riskPercent > 0)) {
          errorEl.textContent =
            "Please enter a positive account balance and risk percentage.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!(entry > 0) || !(stop > 0)) {
          errorEl.textContent =
            "Please enter valid entry and stop-loss prices.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (entry === stop) {
          errorEl.textContent = "Entry and stop-loss prices must be different.";
          errorEl.classList.remove("hidden");
          return;
        }
        if (!(leverage > 0)) {
          errorEl.textContent = "Please select a valid leverage.";
          errorEl.classList.remove("hidden");
          return;
        }

        const pipSize = getPipSize(pair, pipOverride);
        const stopDistance = Math.abs(entry - stop);
        const stopPips = stopDistance / pipSize;

        if (!(stopPips > 0)) {
          errorEl.textContent =
            "Stop-loss distance in pips is zero or invalid.";
          errorEl.classList.remove("hidden");
          return;
        }

        const riskMoney = balance * (riskPercent / 100);

        // Approximate pip value per unit in account currency
        // For simplicity, assume quote currency ~ account currency.
        // Pip value per unit ≈ pipSize when quote = account currency.
        let pipValuePerUnit = pipSize;

        // If account currency differs from quote, adjust using entry price as proxy
        const quoteCurrency = pair.slice(3); // e.g. EURUSD -> "USD"
        if (quoteCurrency !== accountCurrency) {
          // Very rough approximation: convert via entry price
          // If account currency is base (e.g. EUR account trading EURUSD), pip value per unit ≈ pipSize / entry
          const baseCurrency = pair.slice(0, 3);
          if (baseCurrency === accountCurrency && entry > 0) {
            pipValuePerUnit = pipSize / entry;
          } else if (
            quoteCurrency === "USD" &&
            accountCurrency !== "USD" &&
            entry > 0
          ) {
            // If quote is USD and account is something else, we still approximate using entry
            pipValuePerUnit = pipSize; // leave as is; user should treat as estimate
          }
        }

        const moneyPerPipFor1Unit = pipValuePerUnit;
        const units = riskMoney / (stopPips * moneyPerPipFor1Unit);

        if (!(units > 0)) {
          errorEl.textContent =
            "Calculated position size is invalid. Check your inputs.";
          errorEl.classList.remove("hidden");
          return;
        }

        const lots = units / 100000;
        const notional = units * entry;
        const margin = notional / leverage;
        const marginPercent = (margin / balance) * 100;

        const pipValueTotal = moneyPerPipFor1Unit * units;

        // Update outputs
        document.getElementById("positionSizeLots").textContent =
          formatNumber(lots, 2) + " lots";
        document.getElementById("positionSizeUnits").textContent =
          formatNumber(units, 0) + " units";

        document.getElementById("riskMoney").textContent = formatMoney(
          riskMoney,
          accountCurrency
        );
        document.getElementById("riskPips").textContent =
          formatNumber(stopPips, 1) + " pips to stop-loss";

        document.getElementById("pipValue").textContent = formatMoney(
          pipValueTotal,
          accountCurrency
        );
        document.getElementById("pipInfo").textContent =
          "Per pip, for " + formatNumber(units, 0) + " units";

        document.getElementById("marginRequired").textContent = formatMoney(
          margin,
          accountCurrency
        );
        document.getElementById("marginPercent").textContent =
          formatNumber(marginPercent, 2) + "% of account balance";

        document.getElementById("notionalValue").textContent = formatMoney(
          notional,
          accountCurrency
        );

        // Take-profit P/L
        const tpPLEl = document.getElementById("tpPL");
        const tpPipsEl = document.getElementById("tpPips");
        if (tp && tp > 0 && tp !== entry) {
          const tpDistance = Math.abs(tp - entry);
          const tpPips = tpDistance / pipSize;
          const plMoney =
            tpPips *
            pipValueTotal *
            (direction === "long"
              ? tp > entry
                ? 1
                : -1
              : tp < entry
              ? 1
              : -1);
          const rr = plMoney / -riskMoney; // riskMoney is positive, loss is -riskMoney
          tpPLEl.textContent =
            formatMoney(plMoney, accountCurrency) +
            " (" +
            (plMoney >= 0 ? "profit" : "loss") +
            ")";
          tpPipsEl.textContent =
            formatNumber(tpPips, 1) +
            " pips to take-profit • R:R ≈ " +
            formatNumber(rr, 2);
        } else {
          tpPLEl.textContent = "–";
          tpPipsEl.textContent =
            "Enter a take-profit price to see potential P/L.";
        }
      }

      document
        .getElementById("calcBtn")
        .addEventListener("click", calculateForex);

      // Run once on load with defaults
      window.addEventListener("DOMContentLoaded", calculateForex);
    </script>

