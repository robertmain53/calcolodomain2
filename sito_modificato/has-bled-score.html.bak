    <script>
      function getRadioValue(name) {
        const el = document.querySelector('input[name="' + name + '"]:checked');
        return el ? parseInt(el.value, 10) : 0;
      }

      function calculateHasBled() {
        let score = 0;

        // H
        score += getRadioValue("hypertension");

        // A: renal + liver (each 0–1)
        const renal = document.getElementById("renalImpairment").checked
          ? 1
          : 0;
        const liver = document.getElementById("liverImpairment").checked
          ? 1
          : 0;
        score += renal + liver;

        // S
        score += getRadioValue("stroke");

        // B
        score += getRadioValue("bleeding");

        // L
        const labileInr = getRadioValue("labileInr");
        score += labileInr;

        // E
        score += getRadioValue("elderly");

        // D: drugs + alcohol (each 0–1)
        const drugs = document.getElementById("drugs").checked ? 1 : 0;
        const alcohol = document.getElementById("alcohol").checked ? 1 : 0;
        score += drugs + alcohol;

        // Clamp between 0 and 9
        if (score < 0) score = 0;
        if (score > 9) score = 9;

        // Update UI
        const scoreEl = document.getElementById("scoreValue");
        const badgeEl = document.getElementById("riskBadge");
        const descEl = document.getElementById("riskDescription");

        scoreEl.textContent = score.toString();

        let category = "";
        let badgeClass = "badge ";
        let desc = "";

        if (score <= 1) {
          category = "Low risk";
          badgeClass += "bg-green-100 text-green-800 border border-green-300";
          desc =
            "Score " +
            score +
            ": low estimated 1‑year major bleeding risk. Standard follow‑up; continue to address modifiable risk factors.";
        } else if (score === 2) {
          category = "Moderate risk";
          badgeClass +=
            "bg-yellow-100 text-yellow-800 border border-yellow-300";
          desc =
            "Score 2: moderate estimated bleeding risk. Review blood pressure, concomitant drugs (antiplatelets/NSAIDs), alcohol intake, and renal/liver function.";
        } else {
          category = "High risk";
          badgeClass += "bg-red-100 text-red-800 border border-red-300";
          desc =
            "Score " +
            score +
            ": high estimated bleeding risk. Consider more frequent review, correction of reversible risk factors, and careful selection/monitoring of anticoagulant therapy. A high HAS-BLED score alone should not automatically lead to withholding anticoagulation.";
        }

        badgeEl.textContent = category;
        badgeEl.className = badgeClass;
        descEl.textContent = desc;
      }

      document.addEventListener("DOMContentLoaded", function () {
        const form = document.getElementById("hasBledForm");
        const calcBtn = document.getElementById("calculateBtn");
        const resetBtn = document.getElementById("resetBtn");
        const ttrInput = document.getElementById("ttrInput");
        const onWarfarin = document.getElementById("onWarfarin");

        calcBtn.addEventListener("click", calculateHasBled);

        // Auto-suggest labile INR based on TTR when on warfarin
        function updateLabileInrFromTTR() {
          const ttrVal = parseFloat(ttrInput.value);
          if (!onWarfarin.checked || isNaN(ttrVal)) return;
          const labileYes = document.querySelector(
            'input[name="labileInr"][value="1"]'
          );
          const labileNo = document.querySelector(
            'input[name="labileInr"][value="0"]'
          );
          if (!labileYes || !labileNo) return;
          if (ttrVal < 60) {
            labileYes.checked = true;
          } else {
            labileNo.checked = true;
          }
        }

        ttrInput.addEventListener("input", updateLabileInrFromTTR);
        onWarfarin.addEventListener("change", function () {
          if (!onWarfarin.checked) {
            // If not on warfarin, default labile INR to No
            const labileNo = document.querySelector(
              'input[name="labileInr"][value="0"]'
            );
            if (labileNo) labileNo.checked = true;
          } else {
            updateLabileInrFromTTR();
          }
        });

        resetBtn.addEventListener("click", function () {
          form.reset();
          document.getElementById("renalImpairment").checked = false;
          document.getElementById("liverImpairment").checked = false;
          document.getElementById("drugs").checked = false;
          document.getElementById("alcohol").checked = false;
          document.getElementById("onWarfarin").checked = false;
          document.getElementById("ttrInput").value = "";
          document.getElementById("scoreValue").textContent = "0";
          const badgeEl = document.getElementById("riskBadge");
          badgeEl.textContent = "Low risk";
          badgeEl.className =
            "badge bg-green-100 text-green-800 border border-green-300";
          document.getElementById("riskDescription").textContent =
            "Score 0–1: low estimated 1‑year major bleeding risk. Continue to monitor and address modifiable risk factors.";
        });

        // Initial calculation
        calculateHasBled();
      });
    </script>

