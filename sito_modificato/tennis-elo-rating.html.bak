    <script>
      // Utility: get numeric value or NaN
      function getNumber(id) {
        const el = document.getElementById(id);
        if (!el) return NaN;
        const v = parseFloat(el.value);
        return isNaN(v) ? NaN : v;
      }

      function getKFactor() {
        const preset = document.getElementById("kPreset").value;
        if (preset === "custom") {
          const k = getNumber("kCustom");
          return isNaN(k) || k <= 0 ? 32 : k;
        }
        const k = parseFloat(preset);
        return isNaN(k) ? 32 : k;
      }

      function computeExpectedProbabilities(ra, rb) {
        const qa = Math.pow(10, ra / 400);
        const qb = Math.pow(10, rb / 400);
        const ea = qa / (qa + qb);
        const eb = 1 - ea;
        return { ea, eb };
      }

      function formatPercent(p) {
        if (isNaN(p)) return "–";
        return (p * 100).toFixed(1) + "%";
      }

      function showError(msg) {
        const el = document.getElementById("errorMessage");
        el.textContent = msg || "";
      }

      function appendHistoryRow(matchLabel, resultText, deltaA, deltaB, notes) {
        const tbody = document.getElementById("historyBody");
        if (!tbody) return;
        if (tbody.dataset.empty !== "false") {
          tbody.innerHTML = "";
          tbody.dataset.empty = "false";
        }
        const tr = document.createElement("tr");
        tr.innerHTML = `
      <td class="px-2 py-1 border-t border-gray-200">${matchLabel}</td>
      <td class="px-2 py-1 border-t border-gray-200">${resultText}</td>
      <td class="px-2 py-1 border-t border-gray-200">${
        deltaA > 0 ? "+" : ""
      }${deltaA.toFixed(2)}</td>
      <td class="px-2 py-1 border-t border-gray-200">${
        deltaB > 0 ? "+" : ""
      }${deltaB.toFixed(2)}</td>
      <td class="px-2 py-1 border-t border-gray-200 text-xs text-gray-600">${
        notes || ""
      }</td>
    `;
        tbody.prepend(tr);
      }

      document.addEventListener("DOMContentLoaded", function () {
        const eloAInput = document.getElementById("eloA");
        const eloBInput = document.getElementById("eloB");
        const probAEl = document.getElementById("probA");
        const probBEl = document.getElementById("probB");
        const probSummaryEl = document.getElementById("probSummary");
        const btnCalc = document.getElementById("btnCalculateProb");
        const btnReset = document.getElementById("btnReset");
        const btnUpdate = document.getElementById("btnUpdateRatings");
        const btnClearHistory = document.getElementById("btnClearHistory");
        const matchResultEl = document.getElementById("matchResult");
        const drawAllowedEl = document.getElementById("drawAllowed");
        const scoreTextEl = document.getElementById("scoreText");
        const updateOutput = document.getElementById("updateOutput");
        const newEloAEl = document.getElementById("newEloA");
        const newEloBEl = document.getElementById("newEloB");
        const deltaAEl = document.getElementById("deltaA");
        const deltaBEl = document.getElementById("deltaB");
        const updateSummaryEl = document.getElementById("updateSummary");
        const kPresetEl = document.getElementById("kPreset");
        const kCustomEl = document.getElementById("kCustom");
        const matchImportanceEl = document.getElementById("matchImportance");
        const surfaceEl = document.getElementById("surface");
        const scoreMarginEl = document.getElementById("scoreMargin");
        const playerANameEl = document.getElementById("playerAName");
        const playerBNameEl = document.getElementById("playerBName");
        const newEloAHeadingEl = document.getElementById("newEloAHeading");
        const newEloBHeadingEl = document.getElementById("newEloBHeading");

        function updateCustomKState() {
          if (kPresetEl.value === "custom") {
            kCustomEl.disabled = false;
            kCustomEl.classList.remove("bg-gray-100");
          } else {
            kCustomEl.disabled = true;
            kCustomEl.classList.add("bg-gray-100");
          }
        }
        updateCustomKState();
        kPresetEl.addEventListener("change", updateCustomKState);

        btnCalc.addEventListener("click", function () {
          showError("");
          const ra = getNumber("eloA");
          const rb = getNumber("eloB");
          if (isNaN(ra) || isNaN(rb)) {
            showError(
              "Please enter valid numeric Elo ratings for both players."
            );
            probAEl.textContent = "–";
            probBEl.textContent = "–";
            probSummaryEl.textContent = "";
            return;
          }
          const { ea, eb } = computeExpectedProbabilities(ra, rb);
          probAEl.textContent = formatPercent(ea);
          probBEl.textContent = formatPercent(eb);

          const nameA = playerANameEl.value.trim() || "Player A";
          const nameB = playerBNameEl.value.trim() || "Player B";
          const diff = Math.abs(ra - rb).toFixed(0);
          let fav, underdog, favProb;
          if (ea >= eb) {
            fav = nameA;
            underdog = nameB;
            favProb = ea;
          } else {
            fav = nameB;
            underdog = nameA;
            favProb = eb;
          }
          probSummaryEl.textContent = `${fav} is the favorite with a ${formatPercent(
            favProb
          )} chance to win based on a ${diff}-point Elo difference.`;
        });

        btnUpdate.addEventListener("click", function () {
          showError("");
          const ra = getNumber("eloA");
          const rb = getNumber("eloB");
          if (isNaN(ra) || isNaN(rb)) {
            showError(
              "Please enter valid numeric Elo ratings before updating."
            );
            return;
          }
          const result = matchResultEl.value;
          const allowDraw = drawAllowedEl.value === "yes";
          if (!result) {
            showError("Please select the match result (winner).");
            return;
          }
          if (result === "draw" && !allowDraw) {
            showError(
              "Draws are disabled for this match type. Change “Match type” if you need draws."
            );
            return;
          }

          const { ea, eb } = computeExpectedProbabilities(ra, rb);
          let sa, sb;
          let resultText;
          if (result === "A") {
            sa = 1;
            sb = 0;
            resultText = "Player A wins";
          } else if (result === "B") {
            sa = 0;
            sb = 1;
            resultText = "Player B wins";
          } else {
            sa = 0.5;
            sb = 0.5;
            resultText = "Draw";
          }

          let k = getKFactor();
          const importance = parseFloat(matchImportanceEl.value) || 1;
          const surfaceMult = parseFloat(surfaceEl.value) || 1;
          const scoreMult = parseFloat(scoreMarginEl.value) || 1;
          const effectiveK = k * importance * surfaceMult * scoreMult;

          const deltaA = effectiveK * (sa - ea);
          const deltaB = effectiveK * (sb - eb);
          const raNew = ra + deltaA;
          const rbNew = rb + deltaB;

          newEloAEl.textContent = raNew.toFixed(2);
          newEloBEl.textContent = rbNew.toFixed(2);
          deltaAEl.textContent =
            (deltaA >= 0 ? "+" : "") + deltaA.toFixed(2) + " points";
          deltaBEl.textContent =
            (deltaB >= 0 ? "+" : "") + deltaB.toFixed(2) + " points";

          const nameA = playerANameEl.value.trim() || "Player A";
          const nameB = playerBNameEl.value.trim() || "Player B";
          newEloAHeadingEl.textContent = `${nameA} new rating`;
          newEloBHeadingEl.textContent = `${nameB} new rating`;

          const scoreText = scoreTextEl.value.trim();
          const baseSummary = `${nameA} (${ra.toFixed(0)} → ${raNew.toFixed(
            0
          )}) and ${nameB} (${rb.toFixed(0)} → ${rbNew.toFixed(
            0
          )}) updated with K ≈ ${effectiveK.toFixed(1)}.`;
          const scorePart = scoreText ? ` Reported score: ${scoreText}.` : "";
          updateSummaryEl.textContent = baseSummary + scorePart;
          updateOutput.classList.remove("hidden");

          // Update inputs so next calculation uses new ratings
          eloAInput.value = raNew.toFixed(2);
          eloBInput.value = rbNew.toFixed(2);

          // History row
          const matchLabel = `${nameA} vs ${nameB}`;
          const notes = scoreText || "";
          appendHistoryRow(matchLabel, resultText, deltaA, deltaB, notes);
        });

        btnReset.addEventListener("click", function () {
          showError("");
          eloAInput.value = 1800;
          eloBInput.value = 1850;
          playerANameEl.value = "";
          playerBNameEl.value = "";
          probAEl.textContent = "–";
          probBEl.textContent = "–";
          probSummaryEl.textContent = "";
          matchResultEl.value = "";
          scoreTextEl.value = "";
          kPresetEl.value = "32";
          kCustomEl.value = 32;
          matchImportanceEl.value = "1";
          surfaceEl.value = "1";
          scoreMarginEl.value = "1";
          drawAllowedEl.value = "no";
          updateOutput.classList.add("hidden");
          updateCustomKState();
        });

        btnClearHistory.addEventListener("click", function () {
          const tbody = document.getElementById("historyBody");
          if (!tbody) return;
          tbody.innerHTML =
            '<tr><td colspan="5" class="px-2 py-2 text-center text-gray-500">No matches yet. Calculate and update to start tracking.</td></tr>';
          tbody.dataset.empty = "true";
        });
      });
    </script>

