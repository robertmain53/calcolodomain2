    <script>
      // Tab switching
      const tabSimple = document.getElementById("tab-simple");
      const tabDetailed = document.getElementById("tab-detailed");
      const simpleMode = document.getElementById("simple-mode");
      const detailedMode = document.getElementById("detailed-mode");

      function setMode(mode) {
        if (mode === "simple") {
          simpleMode.classList.remove("hidden");
          detailedMode.classList.add("hidden");
          tabSimple.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          tabSimple.classList.remove(
            "border-gray-300",
            "text-gray-700",
            "hover:bg-gray-50"
          );
          tabDetailed.classList.remove(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          tabDetailed.classList.add("border-gray-300", "text-gray-700");
        } else {
          detailedMode.classList.remove("hidden");
          simpleMode.classList.add("hidden");
          tabDetailed.classList.add(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          tabDetailed.classList.remove(
            "border-gray-300",
            "text-gray-700",
            "hover:bg-gray-50"
          );
          tabSimple.classList.remove(
            "bg-blue-600",
            "text-white",
            "border-blue-600"
          );
          tabSimple.classList.add("border-gray-300", "text-gray-700");
        }
      }

      tabSimple.addEventListener("click", () => setMode("simple"));
      tabDetailed.addEventListener("click", () => setMode("detailed"));

      // Utility: parse number safely
      function num(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) ? 0 : v;
      }

      function formatMoney(v) {
        return "$" + v.toFixed(2);
      }

      function calcLengthInches(length, unit) {
        if (length <= 0) return 0;
        switch (unit) {
          case "inch":
            return length;
          case "foot":
            return length * 12;
          case "mm":
            return length / 25.4;
          case "meter":
            return length * 39.3701;
          default:
            return length;
        }
      }

      function calculate() {
        const usingSimple = !simpleMode.classList.contains("hidden");

        let laborCost = 0;
        let materialCost = 0;
        let overheadAmount = 0;
        let total = 0;
        let effectiveHourly = 0;
        let lengthInch = 0;

        if (usingSimple) {
          const hours = num("simple-hours");
          const rate = num("simple-rate");
          const mat = num("simple-material");
          const overheadPct = num("simple-overhead");

          laborCost = hours * rate;
          materialCost = mat;
          const base = laborCost + materialCost;
          total = base * (1 + overheadPct / 100);
          effectiveHourly = hours > 0 ? laborCost / hours : 0;

          const len = num("simple-length");
          const unit = document.getElementById("simple-length-unit").value;
          lengthInch = calcLengthInches(len, unit);
          overheadAmount = total - base;
        } else {
          const welderRate = num("welder-rate");
          const welderHours = num("welder-hours");
          const helperRate = num("helper-rate");
          const helperHours = num("helper-hours");
          const prepHours = num("prep-hours");
          const travelHours = num("travel-hours");

          const baseMetal = num("base-metal-cost");
          const filler = num("filler-cost");
          const gas = num("gas-cost");
          const consumables = num("consumables-cost");

          const overheadPct = num("overhead-percent");
          const profitPct = num("profit-percent");

          const welderTime = welderHours + prepHours + travelHours;
          laborCost = welderTime * welderRate + helperHours * helperRate;
          materialCost = baseMetal + filler + gas + consumables;

          const sub = laborCost + materialCost;
          const overhead = sub * (overheadPct / 100);
          const profit = sub * (profitPct / 100);
          overheadAmount = overhead + profit;
          total = sub + overhead + profit;

          const totalHours = welderTime + helperHours;
          effectiveHourly = totalHours > 0 ? laborCost / totalHours : 0;

          const len = num("weld-length");
          const unit = document.getElementById("weld-length-unit").value;
          lengthInch = calcLengthInches(len, unit);
        }

        // Update results
        document.getElementById("res-total").textContent = formatMoney(total);
        document.getElementById("res-labor").textContent =
          formatMoney(laborCost);
        document.getElementById("res-material").textContent =
          formatMoney(materialCost);
        document.getElementById("res-overhead").textContent =
          formatMoney(overheadAmount);
        document.getElementById("res-hourly").textContent =
          formatMoney(effectiveHourly) + " /hr";

        const lengthRow = document.getElementById("res-length-row");
        if (lengthInch > 0 && total > 0) {
          const costPerInch = total / lengthInch;
          const costPerFoot = total / (lengthInch / 12);
          const costPerMeter = total / (lengthInch / 39.3701);

          document.getElementById("res-per-inch").textContent =
            formatMoney(costPerInch) + " /in";
          document.getElementById("res-per-foot").textContent =
            formatMoney(costPerFoot) + " /ft";
          document.getElementById("res-per-meter").textContent =
            formatMoney(costPerMeter) + " /m";
          lengthRow.classList.remove("hidden");
        } else {
          lengthRow.classList.add("hidden");
        }
      }

      document.getElementById("calc-btn").addEventListener("click", calculate);

      document.getElementById("reset-btn").addEventListener("click", () => {
        // Simple defaults
        document.getElementById("simple-hours").value = 4;
        document.getElementById("simple-rate").value = 80;
        document.getElementById("simple-material").value = 100;
        document.getElementById("simple-overhead").value = 30;
        document.getElementById("simple-length").value = 0;
        document.getElementById("simple-length-unit").value = "inch";

        // Detailed defaults
        document.getElementById("welder-rate").value = 70;
        document.getElementById("welder-hours").value = 4;
        document.getElementById("helper-rate").value = 25;
        document.getElementById("helper-hours").value = 2;
        document.getElementById("prep-hours").value = 1;
        document.getElementById("travel-hours").value = 0.5;

        document.getElementById("base-metal-cost").value = 120;
        document.getElementById("filler-cost").value = 30;
        document.getElementById("gas-cost").value = 25;
        document.getElementById("consumables-cost").value = 20;

        document.getElementById("overhead-percent").value = 20;
        document.getElementById("profit-percent").value = 15;
        document.getElementById("weld-length").value = 60;
        document.getElementById("weld-length-unit").value = "inch";

        calculate();
      });

      // Initial calculation
      calculate();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
