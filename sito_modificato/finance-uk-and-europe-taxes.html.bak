    <script>
      // Simple country presets for approximate effective rates and currency symbol
      const countryPresets = {
        uk: { currency: "£", incomeRate: 0.22, socialRate: 0.08, vat: 0.2 },
        de: { currency: "€", incomeRate: 0.24, socialRate: 0.14, vat: 0.19 },
        fr: { currency: "€", incomeRate: 0.2, socialRate: 0.18, vat: 0.2 },
        es: { currency: "€", incomeRate: 0.21, socialRate: 0.07, vat: 0.21 },
        it: { currency: "€", incomeRate: 0.23, socialRate: 0.09, vat: 0.22 },
        nl: { currency: "€", incomeRate: 0.25, socialRate: 0.1, vat: 0.21 },
        se: { currency: "kr", incomeRate: 0.27, socialRate: 0.02, vat: 0.25 }, // employee share small; employer pays more
      };

      const countrySelect = document.getElementById("country-select");
      const incomeInput = document.getElementById("income-input");
      const includeSocialEl = document.getElementById("include-social");
      const includeVatEl = document.getElementById("include-vat");
      const currencySymbol = document.getElementById("currency-symbol");

      const incomeTaxAmountEl = document.getElementById("income-tax-amount");
      const socialAmountEl = document.getElementById("social-amount");
      const totalDirectAmountEl = document.getElementById(
        "total-direct-amount"
      );
      const effectiveRateEl = document.getElementById("effective-rate");
      const netIncomeEl = document.getElementById("net-income");
      const netBarEl = document.getElementById("net-bar");

      function formatMoney(value, currency) {
        if (!isFinite(value)) return "–";
        const abs = Math.abs(value);
        const decimals = abs >= 1000 ? 0 : 2;
        return (
          currency +
          value.toLocaleString(undefined, {
            minimumFractionDigits: decimals,
            maximumFractionDigits: decimals,
          })
        );
      }

      function formatPercent(value) {
        if (!isFinite(value)) return "–";
        return value.toFixed(1) + "%";
      }

      function updateCurrencySymbol() {
        const preset = countryPresets[countrySelect.value];
        if (preset) {
          currencySymbol.textContent = preset.currency;
        }
      }

      function calculate() {
        const preset = countryPresets[countrySelect.value];
        if (!preset) return;

        const gross = parseFloat(incomeInput.value);
        if (!isFinite(gross) || gross <= 0) {
          incomeTaxAmountEl.textContent = "–";
          socialAmountEl.textContent = "–";
          totalDirectAmountEl.textContent = "–";
          effectiveRateEl.textContent = "–";
          netIncomeEl.textContent = "–";
          netBarEl.style.width = "0%";
          return;
        }

        const incomeTax = gross * preset.incomeRate;
        const social = includeSocialEl.checked ? gross * preset.socialRate : 0;
        const totalTax = incomeTax + social;
        const effective = (totalTax / gross) * 100;
        const net = gross - totalTax;

        incomeTaxAmountEl.textContent = formatMoney(incomeTax, preset.currency);
        socialAmountEl.textContent = includeSocialEl.checked
          ? formatMoney(social, preset.currency)
          : "Not included";
        totalDirectAmountEl.textContent = formatMoney(
          totalTax,
          preset.currency
        );
        effectiveRateEl.textContent = formatPercent(effective);
        netIncomeEl.textContent = formatMoney(net, preset.currency);

        const netShare = Math.max(0, Math.min(100, (net / gross) * 100));
        netBarEl.style.width = netShare.toFixed(1) + "%";
      }

      document
        .getElementById("calculate-btn")
        .addEventListener("click", calculate);
      countrySelect.addEventListener("change", () => {
        updateCurrencySymbol();
        calculate();
      });
      incomeInput.addEventListener("input", () => {
        /* live update optional */
      });
      includeSocialEl.addEventListener("change", calculate);

      // Initialize
      updateCurrencySymbol();
      calculate();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
