    <script>
      // Utility functions
      function mmFromDistance(value, unit) {
        if (!isFinite(value) || value <= 0) return NaN;
        if (unit === "m") return value * 1000;
        if (unit === "ft") return value * 304.8;
        return value;
      }

      function distanceFromMm(mm, unit) {
        if (!isFinite(mm) || mm <= 0) return NaN;
        if (unit === "m") return mm / 1000;
        if (unit === "ft") return mm / 304.8;
        return mm;
      }

      function formatDistance(value, unit) {
        if (!isFinite(value)) return "∞";
        if (unit === "m") {
          if (value < 1) return (value * 100).toFixed(1) + " cm";
          if (value < 1000) return value.toFixed(2) + " m";
          return (value / 1000).toFixed(2) + " km";
        } else if (unit === "ft") {
          if (value < 1) return (value * 12).toFixed(1) + " in";
          if (value < 5280) return value.toFixed(2) + " ft";
          return (value / 5280).toFixed(2) + " mi";
        }
        return value.toFixed(2) + " mm";
      }

      function formatLengthDifference(value, unit) {
        if (!isFinite(value)) return "∞";
        if (unit === "m") {
          if (value < 0.01) return (value * 100).toFixed(1) + " cm";
          if (value < 1000) return value.toFixed(2) + " m";
          return (value / 1000).toFixed(2) + " km";
        } else if (unit === "ft") {
          if (value < 0.1) return (value * 12).toFixed(1) + " in";
          if (value < 5280) return value.toFixed(2) + " ft";
          return (value / 5280).toFixed(2) + " mi";
        }
        return value.toFixed(2) + " mm";
      }

      function formatBlur(mm) {
        if (!isFinite(mm)) return "–";
        const um = mm * 1000;
        if (um < 1) return (um * 1000).toFixed(2) + " nm";
        if (um < 1000) return um.toFixed(2) + " µm";
        return mm.toFixed(3) + " mm";
      }

      function updateCameraPreset() {
        const preset = document.getElementById("camera-preset").value;
        const cocInput = document.getElementById("coc");
        const cocUnit = document.getElementById("coc-unit");
        if (preset === "fullframe") {
          cocUnit.value = "mm";
          cocInput.value = 0.03;
        } else if (preset === "aps-c") {
          cocUnit.value = "mm";
          cocInput.value = 0.02;
        } else if (preset === "mft") {
          cocUnit.value = "mm";
          cocInput.value = 0.015;
        } else if (preset === "phone") {
          cocUnit.value = "mm";
          cocInput.value = 0.007;
        }
      }

      function getCoCmm() {
        const cocVal = parseFloat(document.getElementById("coc").value);
        const cocUnit = document.getElementById("coc-unit").value;
        if (!isFinite(cocVal) || cocVal <= 0) return NaN;
        if (cocUnit === "mm") return cocVal;
        if (cocUnit === "um") return cocVal / 1000;
        return cocVal;
      }

      function computeDOF() {
        const f = parseFloat(document.getElementById("focal-length").value); // mm
        const N = parseFloat(document.getElementById("aperture").value);
        const sInput = parseFloat(
          document.getElementById("subject-distance").value
        );
        const sUnit = document.getElementById("distance-unit").value;
        const bgInput = parseFloat(
          document.getElementById("background-distance").value
        );
        const bgUnit = document.getElementById("background-unit").value;
        const coc = getCoCmm();

        const resultHyper = document.getElementById("result-hyperfocal");
        const resultNear = document.getElementById("result-near-limit");
        const resultFar = document.getElementById("result-far-limit");
        const resultTotal = document.getElementById("result-total-dof");
        const resultFront = document.getElementById("result-front-dof");
        const resultBack = document.getElementById("result-back-dof");
        const resultBlurSubject = document.getElementById(
          "result-blur-subject"
        );
        const resultBlurBackground = document.getElementById(
          "result-blur-background"
        );

        if (
          !isFinite(f) ||
          f <= 0 ||
          !isFinite(N) ||
          N <= 0 ||
          !isFinite(sInput) ||
          sInput <= 0 ||
          !isFinite(coc) ||
          coc <= 0
        ) {
          resultHyper.textContent = "–";
          resultNear.textContent = "–";
          resultFar.textContent = "–";
          resultTotal.textContent = "–";
          resultFront.textContent = "–";
          resultBack.textContent = "–";
          resultBlurSubject.textContent = "–";
          resultBlurBackground.textContent = "–";
          return;
        }

        const s = mmFromDistance(sInput, sUnit); // mm

        // Hyperfocal distance
        const H = (f * f) / (N * coc) + f; // mm

        // Near and far limits
        const numerator = H * s;
        const nearDen = H + (s - f);
        const farDen = H - (s - f);

        let Dn = numerator / nearDen;
        let Df;
        if (s < H && farDen > 0) {
          Df = numerator / farDen;
        } else {
          Df = Infinity;
        }

        const DnDisplay = distanceFromMm(Dn, sUnit);
        const DfDisplay = isFinite(Df) ? distanceFromMm(Df, sUnit) : Infinity;
        const HDisplay = distanceFromMm(H, sUnit);

        resultHyper.textContent = formatDistance(HDisplay, sUnit);
        resultNear.textContent = formatDistance(DnDisplay, sUnit);
        resultFar.textContent = isFinite(DfDisplay)
          ? formatDistance(DfDisplay, sUnit)
          : "∞";

        let totalDOF, frontDOF, backDOF;
        if (isFinite(Df)) {
          totalDOF = DfDisplay - DnDisplay;
          frontDOF = sInput - DnDisplay;
          backDOF = DfDisplay - sInput;
        } else {
          totalDOF = Infinity;
          frontDOF = sInput - DnDisplay;
          backDOF = Infinity;
        }

        resultTotal.textContent = isFinite(totalDOF)
          ? formatLengthDifference(totalDOF, sUnit)
          : "∞";
        resultFront.textContent = isFinite(frontDOF)
          ? formatLengthDifference(frontDOF, sUnit)
          : "∞";
        resultBack.textContent = isFinite(backDOF)
          ? formatLengthDifference(backDOF, sUnit)
          : "∞";

        // Blur at subject and background distances (approximate)
        // Magnification m = f / (s - f)
        const mSubject = f / (s - f);
        const blurSubject = coc * Math.abs(mSubject); // approximate

        resultBlurSubject.textContent = formatBlur(blurSubject);

        if (isFinite(bgInput) && bgInput > 0) {
          let bgMm;
          if (bgUnit === "same") {
            bgMm = mmFromDistance(bgInput, sUnit);
          } else {
            bgMm = mmFromDistance(bgInput, bgUnit);
          }
          const mBg = f / (bgMm - f);
          const blurBg = coc * Math.abs(mBg);
          resultBlurBackground.textContent = formatBlur(blurBg);
        } else {
          resultBlurBackground.textContent = "–";
        }
      }

      document.addEventListener("DOMContentLoaded", function () {
        const cameraPreset = document.getElementById("camera-preset");
        const cocUnit = document.getElementById("coc-unit");
        const cocUnitLabel = document.getElementById("coc-unit-label");
        const apertureInput = document.getElementById("aperture");
        const distanceInput = document.getElementById("subject-distance");
        const distanceUnit = document.getElementById("distance-unit");
        const sliderAperture = document.getElementById("slider-aperture");
        const sliderApertureValue = document.getElementById(
          "slider-aperture-value"
        );
        const sliderDistance = document.getElementById("slider-distance");
        const sliderDistanceValue = document.getElementById(
          "slider-distance-value"
        );
        const resetBtn = document.getElementById("reset-btn");

        cameraPreset.addEventListener("change", function () {
          if (this.value !== "custom") {
            updateCameraPreset();
            computeDOF();
          }
        });

        cocUnit.addEventListener("change", function () {
          cocUnitLabel.textContent = this.value === "mm" ? "mm" : "µm";
          computeDOF();
        });

        [
          "focal-length",
          "aperture",
          "subject-distance",
          "background-distance",
          "coc",
        ].forEach((id) => {
          const el = document.getElementById(id);
          el.addEventListener("input", function () {
            if (id === "aperture") {
              sliderAperture.value = this.value;
              sliderApertureValue.textContent =
                "f/" + parseFloat(this.value).toFixed(1);
            }
            if (id === "subject-distance") {
              sliderDistance.value = this.value;
              const unit = distanceUnit.value === "m" ? "m" : "ft";
              sliderDistanceValue.textContent =
                parseFloat(this.value).toFixed(1) + " " + unit;
            }
            computeDOF();
          });
        });

        distanceUnit.addEventListener("change", function () {
          const val = parseFloat(distanceInput.value);
          if (isFinite(val) && val > 0) {
            const mm = mmFromDistance(val, this.value === "m" ? "ft" : "m"); // convert from old to new
            const newVal = distanceFromMm(mm, this.value);
            distanceInput.value = newVal.toFixed(2);
            sliderDistance.value = newVal;
            const unit = this.value === "m" ? "m" : "ft";
            sliderDistanceValue.textContent = newVal.toFixed(1) + " " + unit;
          }
          computeDOF();
        });

        sliderAperture.addEventListener("input", function () {
          apertureInput.value = parseFloat(this.value).toFixed(1);
          sliderApertureValue.textContent =
            "f/" + parseFloat(this.value).toFixed(1);
          computeDOF();
        });

        sliderDistance.addEventListener("input", function () {
          const unit = distanceUnit.value === "m" ? "m" : "ft";
          distanceInput.value = parseFloat(this.value).toFixed(2);
          sliderDistanceValue.textContent =
            parseFloat(this.value).toFixed(1) + " " + unit;
          computeDOF();
        });

        resetBtn.addEventListener("click", function () {
          cameraPreset.value = "fullframe";
          updateCameraPreset();
          document.getElementById("focal-length").value = 50;
          document.getElementById("aperture").value = 1.8;
          document.getElementById("subject-distance").value = 3;
          document.getElementById("background-distance").value = "";
          distanceUnit.value = "m";
          document.getElementById("background-unit").value = "same";
          sliderAperture.value = 1.8;
          sliderApertureValue.textContent = "f/1.8";
          sliderDistance.value = 3;
          sliderDistanceValue.textContent = "3.0 m";
          computeDOF();
        });

        // Initial setup
        updateCameraPreset();
        sliderApertureValue.textContent =
          "f/" + parseFloat(sliderAperture.value).toFixed(1);
        sliderDistanceValue.textContent =
          parseFloat(sliderDistance.value).toFixed(1) + " m";
        computeDOF();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
