    <script>
      // Utility functions
      const FT3_PER_YD3 = 27;
      const M3_PER_YD3 = 0.764554857984;
      const FT_PER_M = 3.280839895;
      const IN_PER_FT = 12;

      function roundTo(value, decimals) {
        const factor = Math.pow(10, decimals);
        return Math.round(value * factor) / factor;
      }

      function getBagYieldFt3(sizeLb) {
        if (sizeLb === 40) return 0.3;
        if (sizeLb === 60) return 0.45;
        return 0.6; // 80 lb
      }

      function yd3FromFt3(ft3) {
        return ft3 / FT3_PER_YD3;
      }

      function yd3FromM3(m3) {
        return m3 / M3_PER_YD3;
      }

      function updateUnitLabels(system) {
        const isImperial = system === "imperial";

        // Slab
        document.getElementById("slab-length-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("slab-width-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("slab-thickness-unit").textContent = isImperial
          ? "in"
          : "cm";

        // Footing
        document.getElementById("footing-length-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("footing-width-unit").textContent = isImperial
          ? "in"
          : "cm";
        document.getElementById("footing-thickness-unit").textContent =
          isImperial ? "in" : "cm";

        // Column
        document.getElementById("column-diameter-unit").textContent = isImperial
          ? "in"
          : "cm";
        document.getElementById("column-width-unit").textContent = isImperial
          ? "in"
          : "cm";
        document.getElementById("column-depth-unit").textContent = isImperial
          ? "in"
          : "cm";
        document.getElementById("column-height-unit").textContent = isImperial
          ? "ft"
          : "m";

        // Wall
        document.getElementById("wall-length-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("wall-height-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("wall-thickness-unit").textContent = isImperial
          ? "in"
          : "cm";

        // Masonry
        document.getElementById("masonry-length-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("masonry-height-unit").textContent = isImperial
          ? "ft"
          : "m";
        document.getElementById("masonry-joint-unit").textContent = isImperial
          ? "in"
          : "cm";
      }

      function getSystem() {
        return document.getElementById("unit-system").value;
      }

      function getBagSize() {
        return parseInt(document.getElementById("bag-size").value, 10);
      }

      // Slab calculation
      function calcSlab() {
        const system = getSystem();
        const isImperial = system === "imperial";
        const L = parseFloat(document.getElementById("slab-length").value) || 0;
        const W = parseFloat(document.getElementById("slab-width").value) || 0;
        const T =
          parseFloat(document.getElementById("slab-thickness").value) || 0;

        if (L <= 0 || W <= 0 || T <= 0) return;

        let yd3, m3;
        if (isImperial) {
          const thicknessFt = T / IN_PER_FT;
          const ft3 = L * W * thicknessFt;
          yd3 = yd3FromFt3(ft3);
          m3 = yd3 * M3_PER_YD3;
        } else {
          const thicknessM = T / 100; // cm to m
          const m3Local = L * W * thicknessM;
          m3 = m3Local;
          yd3 = yd3FromM3(m3Local);
        }

        const bagSize = getBagSize();
        const yieldFt3 = getBagYieldFt3(bagSize);
        const ft3Total = yd3 * FT3_PER_YD3;
        const bags = ft3Total / yieldFt3;
        const bags10 = bags * 1.1;

        document.getElementById("slab-vol-yd3").textContent = `${roundTo(
          yd3,
          2
        )} yd³`;
        document.getElementById("slab-vol-m3").textContent = `${roundTo(
          m3,
          2
        )} m³`;
        document.getElementById("slab-bags").textContent = `${Math.ceil(
          bags
        )} bags`;
        document.getElementById("slab-bags-10").textContent = `${Math.ceil(
          bags10
        )} bags`;
        document.getElementById("slab-results").classList.remove("hidden");
      }

      // Footing calculation
      function calcFooting() {
        const system = getSystem();
        const isImperial = system === "imperial";
        const L =
          parseFloat(document.getElementById("footing-length").value) || 0;
        const W =
          parseFloat(document.getElementById("footing-width").value) || 0;
        const T =
          parseFloat(document.getElementById("footing-thickness").value) || 0;

        if (L <= 0 || W <= 0 || T <= 0) return;

        let yd3, m3;
        if (isImperial) {
          const widthFt = W / IN_PER_FT;
          const thicknessFt = T / IN_PER_FT;
          const ft3 = L * widthFt * thicknessFt;
          yd3 = yd3FromFt3(ft3);
          m3 = yd3 * M3_PER_YD3;
        } else {
          const widthM = W / 100;
          const thicknessM = T / 100;
          const m3Local = L * widthM * thicknessM;
          m3 = m3Local;
          yd3 = yd3FromM3(m3Local);
        }

        const bagSize = getBagSize();
        const yieldFt3 = getBagYieldFt3(bagSize);
        const ft3Total = yd3 * FT3_PER_YD3;
        const bags = ft3Total / yieldFt3;
        const bags10 = bags * 1.1;

        document.getElementById("footing-vol-yd3").textContent = `${roundTo(
          yd3,
          2
        )} yd³`;
        document.getElementById("footing-vol-m3").textContent = `${roundTo(
          m3,
          2
        )} m³`;
        document.getElementById("footing-bags").textContent = `${Math.ceil(
          bags
        )} bags`;
        document.getElementById("footing-bags-10").textContent = `${Math.ceil(
          bags10
        )} bags`;
        document.getElementById("footing-results").classList.remove("hidden");
      }

      // Column calculation
      function calcColumn() {
        const system = getSystem();
        const isImperial = system === "imperial";
        const shape = document.getElementById("column-shape").value;
        const H =
          parseFloat(document.getElementById("column-height").value) || 0;
        const count =
          parseInt(document.getElementById("column-count").value, 10) || 0;

        if (H <= 0 || count <= 0) return;

        let yd3, m3;

        if (shape === "round") {
          const D =
            parseFloat(document.getElementById("column-diameter").value) || 0;
          if (D <= 0) return;

          if (isImperial) {
            const radiusFt = D / IN_PER_FT / 2;
            const ft3 = Math.PI * radiusFt * radiusFt * H * count;
            yd3 = yd3FromFt3(ft3);
            m3 = yd3 * M3_PER_YD3;
          } else {
            const radiusM = D / 100 / 2;
            const m3Local = Math.PI * radiusM * radiusM * H * count;
            m3 = m3Local;
            yd3 = yd3FromM3(m3Local);
          }
        } else {
          const W =
            parseFloat(document.getElementById("column-width").value) || 0;
          const Dp =
            parseFloat(document.getElementById("column-depth").value) || 0;
          if (W <= 0 || Dp <= 0) return;

          if (isImperial) {
            const widthFt = W / IN_PER_FT;
            const depthFt = Dp / IN_PER_FT;
            const ft3 = widthFt * depthFt * H * count;
            yd3 = yd3FromFt3(ft3);
            m3 = yd3 * M3_PER_YD3;
          } else {
            const widthM = W / 100;
            const depthM = Dp / 100;
            const m3Local = widthM * depthM * H * count;
            m3 = m3Local;
            yd3 = yd3FromM3(m3Local);
          }
        }

        const bagSize = getBagSize();
        const yieldFt3 = getBagYieldFt3(bagSize);
        const ft3Total = yd3 * FT3_PER_YD3;
        const bags = ft3Total / yieldFt3;
        const bags10 = bags * 1.1;

        document.getElementById("column-vol-yd3").textContent = `${roundTo(
          yd3,
          2
        )} yd³`;
        document.getElementById("column-vol-m3").textContent = `${roundTo(
          m3,
          2
        )} m³`;
        document.getElementById("column-bags").textContent = `${Math.ceil(
          bags
        )} bags`;
        document.getElementById("column-bags-10").textContent = `${Math.ceil(
          bags10
        )} bags`;
        document.getElementById("column-results").classList.remove("hidden");
      }

      // Wall calculation
      function calcWall() {
        const system = getSystem();
        const isImperial = system === "imperial";
        const L = parseFloat(document.getElementById("wall-length").value) || 0;
        const H = parseFloat(document.getElementById("wall-height").value) || 0;
        const T =
          parseFloat(document.getElementById("wall-thickness").value) || 0;

        if (L <= 0 || H <= 0 || T <= 0) return;

        let yd3, m3;
        if (isImperial) {
          const thicknessFt = T / IN_PER_FT;
          const ft3 = L * H * thicknessFt;
          yd3 = yd3FromFt3(ft3);
          m3 = yd3 * M3_PER_YD3;
        } else {
          const thicknessM = T / 100;
          const m3Local = L * H * thicknessM;
          m3 = m3Local;
          yd3 = yd3FromM3(m3Local);
        }

        const bagSize = getBagSize();
        const yieldFt3 = getBagYieldFt3(bagSize);
        const ft3Total = yd3 * FT3_PER_YD3;
        const bags = ft3Total / yieldFt3;
        const bags10 = bags * 1.1;

        document.getElementById("wall-vol-yd3").textContent = `${roundTo(
          yd3,
          2
        )} yd³`;
        document.getElementById("wall-vol-m3").textContent = `${roundTo(
          m3,
          2
        )} m³`;
        document.getElementById("wall-bags").textContent = `${Math.ceil(
          bags
        )} bags`;
        document.getElementById("wall-bags-10").textContent = `${Math.ceil(
          bags10
        )} bags`;
        document.getElementById("wall-results").classList.remove("hidden");
      }

      // Masonry calculation
      function calcMasonry() {
        const system = getSystem();
        const isImperial = system === "imperial";
        const L =
          parseFloat(document.getElementById("masonry-length").value) || 0;
        const H =
          parseFloat(document.getElementById("masonry-height").value) || 0;
        const joint =
          parseFloat(document.getElementById("masonry-joint").value) || 0.375;
        const blockSize = document.getElementById("masonry-block-size").value;

        if (L <= 0 || H <= 0 || joint <= 0) return;

        let areaFt2, areaM2;
        if (isImperial) {
          areaFt2 = L * H;
          areaM2 = areaFt2 / (FT_PER_M * FT_PER_M);
        } else {
          areaM2 = L * H;
          areaFt2 = areaM2 * FT_PER_M * FT_PER_M;
        }

        // Block face dimensions including joint (imperial)
        let blockHIn = 8;
        let blockLIn = 16;
        if (blockSize === "6x8x16") blockHIn = 8;
        if (blockSize === "4x8x16") blockHIn = 8;

        const jointIn = isImperial ? joint : joint / 2.54; // cm to in
        const effHft = (blockHIn + jointIn) / IN_PER_FT;
        const effLft = (blockLIn + jointIn) / IN_PER_FT;
        const blockAreaFt2 = effHft * effLft;
        const blocks = areaFt2 / blockAreaFt2;
        const blocks5 = blocks * 1.05;

        // Mortar volume estimate (m3) per m2
        let mortarPerM2 = 0.025; // baseline for 8x8x16
        if (blockSize === "6x8x16") mortarPerM2 *= 0.9;
        if (blockSize === "4x8x16") mortarPerM2 *= 0.8;

        const mortarM3 = mortarPerM2 * areaM2;
        const mortarYd3 = yd3FromM3(mortarM3);

        // Assume 80 lb bag of mortar ≈ 0.6 ft3
        const mortarBags = (mortarYd3 * FT3_PER_YD3) / 0.6;

        const areaLabel = isImperial
          ? `${roundTo(areaFt2, 1)} ft² (${roundTo(areaM2, 2)} m²)`
          : `${roundTo(areaM2, 2)} m² (${roundTo(areaFt2, 1)} ft²)`;

        document.getElementById("masonry-area").textContent = areaLabel;
        document.getElementById("masonry-blocks").textContent = `${Math.ceil(
          blocks
        )} blocks`;
        document.getElementById("masonry-blocks-5").textContent = `${Math.ceil(
          blocks5
        )} blocks`;
        document.getElementById("masonry-mortar-vol").textContent = `${roundTo(
          mortarYd3,
          2
        )} yd³ (${roundTo(mortarM3, 2)} m³)`;
        document.getElementById(
          "masonry-mortar-bags"
        ).textContent = `${Math.ceil(mortarBags)} bags (80 lb)`;
        document.getElementById("masonry-results").classList.remove("hidden");
      }

      // Tab handling
      function initTabs() {
        const buttons = document.querySelectorAll(".tab-btn");
        const tabs = document.querySelectorAll(".calc-tab");

        function activateTab(name) {
          tabs.forEach((tab) => {
            tab.classList.toggle("hidden", tab.id !== "tab-" + name);
          });
          buttons.forEach((btn) => {
            const active = btn.dataset.tab === name;
            btn.classList.toggle("tab-active", active);
            btn.classList.toggle("border-blue-600", active);
            btn.classList.toggle("text-blue-700", active);
          });
        }

        buttons.forEach((btn) => {
          btn.addEventListener("click", () => activateTab(btn.dataset.tab));
        });

        // Default tab
        activateTab("slab");
      }

      function initColumnShapeToggle() {
        const shapeSelect = document.getElementById("column-shape");
        const diameterGroup = document.getElementById("column-diameter-group");
        const widthGroup = document.getElementById("column-width-group");
        const depthGroup = document.getElementById("column-depth-group");

        function update() {
          const shape = shapeSelect.value;
          if (shape === "round") {
            diameterGroup.classList.remove("hidden");
            widthGroup.classList.add("hidden");
            depthGroup.classList.add("hidden");
          } else {
            diameterGroup.classList.add("hidden");
            widthGroup.classList.remove("hidden");
            depthGroup.classList.remove("hidden");
          }
        }

        shapeSelect.addEventListener("change", update);
        update();
      }

      function initEvents() {
        document
          .getElementById("unit-system")
          .addEventListener("change", (e) => {
            updateUnitLabels(e.target.value);
          });

        // Slab
        document
          .getElementById("slab-calc")
          .addEventListener("click", calcSlab);
        document.getElementById("slab-reset").addEventListener("click", () => {
          document.getElementById("slab-length").value = 20;
          document.getElementById("slab-width").value = 10;
          document.getElementById("slab-thickness").value = 4;
          document.getElementById("slab-results").classList.add("hidden");
        });

        // Footing
        document
          .getElementById("footing-calc")
          .addEventListener("click", calcFooting);
        document
          .getElementById("footing-reset")
          .addEventListener("click", () => {
            document.getElementById("footing-length").value = 40;
            document.getElementById("footing-width").value = 16;
            document.getElementById("footing-thickness").value = 8;
            document.getElementById("footing-results").classList.add("hidden");
          });

        // Column
        document
          .getElementById("column-calc")
          .addEventListener("click", calcColumn);
        document
          .getElementById("column-reset")
          .addEventListener("click", () => {
            document.getElementById("column-shape").value = "round";
            document.getElementById("column-diameter").value = 12;
            document.getElementById("column-width").value = "";
            document.getElementById("column-depth").value = "";
            document.getElementById("column-height").value = 8;
            document.getElementById("column-count").value = 4;
            document.getElementById("column-results").classList.add("hidden");
            initColumnShapeToggle();
          });

        // Wall
        document
          .getElementById("wall-calc")
          .addEventListener("click", calcWall);
        document.getElementById("wall-reset").addEventListener("click", () => {
          document.getElementById("wall-length").value = 30;
          document.getElementById("wall-height").value = 8;
          document.getElementById("wall-thickness").value = 8;
          document.getElementById("wall-results").classList.add("hidden");
        });

        // Masonry
        document
          .getElementById("masonry-calc")
          .addEventListener("click", calcMasonry);
        document
          .getElementById("masonry-reset")
          .addEventListener("click", () => {
            document.getElementById("masonry-length").value = 20;
            document.getElementById("masonry-height").value = 6;
            document.getElementById("masonry-block-size").value = "8x8x16";
            document.getElementById("masonry-joint").value = 0.375;
            document.getElementById("masonry-results").classList.add("hidden");
          });
      }

      document.addEventListener("DOMContentLoaded", () => {
        initTabs();
        initColumnShapeToggle();
        updateUnitLabels(getSystem());
        initEvents();
      });

      // Mobile menu script (simple)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
