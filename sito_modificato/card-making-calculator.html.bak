    <script>
      // Unit handling
      let currentUnit = "in"; // 'in' or 'cm'
      const IN_PER_CM = 0.3937007874;

      function toInches(value) {
        return currentUnit === "in" ? value : value * IN_PER_CM;
      }
      function fromInches(value) {
        return currentUnit === "in" ? value : value / IN_PER_CM;
      }
      function formatVal(value, decimals = 2) {
        if (!isFinite(value)) return "-";
        return value.toFixed(decimals).replace(/\.00$/, "");
      }

      function updateUnitButtons() {
        document
          .getElementById("unit-in")
          .classList.toggle("bg-blue-600", currentUnit === "in");
        document
          .getElementById("unit-in")
          .classList.toggle("text-white", currentUnit === "in");
        document
          .getElementById("unit-in")
          .classList.toggle("border-blue-600", currentUnit === "in");
        document
          .getElementById("unit-cm")
          .classList.toggle("bg-blue-600", currentUnit === "cm");
        document
          .getElementById("unit-cm")
          .classList.toggle("text-white", currentUnit === "cm");
        document
          .getElementById("unit-cm")
          .classList.toggle("border-blue-600", currentUnit === "cm");
      }

      document.getElementById("unit-in").addEventListener("click", () => {
        if (currentUnit === "in") return;
        convertAllInputs("in");
      });
      document.getElementById("unit-cm").addEventListener("click", () => {
        if (currentUnit === "cm") return;
        convertAllInputs("cm");
      });

      function convertAllInputs(targetUnit) {
        const inputs = [
          "sheet-width",
          "sheet-height",
          "card-width",
          "card-height",
          "sheet-margin",
          "cut-gap",
          "env-card-width",
          "env-card-height",
          "env-clearance",
          "box-card-width",
          "box-card-height",
          "box-depth",
          "box-clearance",
        ];
        inputs.forEach((id) => {
          const el = document.getElementById(id);
          if (!el) return;
          const v = parseFloat(el.value);
          if (!isFinite(v)) return;
          let inches = currentUnit === "in" ? v : v * IN_PER_CM;
          let newVal = targetUnit === "in" ? inches : inches / IN_PER_CM;
          el.value = formatVal(newVal, 2);
        });
        currentUnit = targetUnit;
        updateUnitButtons();
      }
      updateUnitButtons();

      // Sheet presets
      document
        .getElementById("sheet-preset")
        .addEventListener("change", (e) => {
          const preset = e.target.value;
          let wIn, hIn;
          switch (preset) {
            case "letter":
              wIn = 8.5;
              hIn = 11;
              break;
            case "legal":
              wIn = 8.5;
              hIn = 14;
              break;
            case "a4":
              wIn = 8.2677;
              hIn = 11.6929;
              break; // 210x297mm
            case "a3":
              wIn = 11.6929;
              hIn = 16.5354;
              break; // 297x420mm
            case "twelve":
              wIn = 12;
              hIn = 12;
              break;
            default:
              return;
          }
          const w = currentUnit === "in" ? wIn : wIn / IN_PER_CM;
          const h = currentUnit === "in" ? hIn : hIn / IN_PER_CM;
          document.getElementById("sheet-width").value = formatVal(w, 2);
          document.getElementById("sheet-height").value = formatVal(h, 2);
        });

      // Tabs
      const tabButtons = document.querySelectorAll(".tab-btn");
      const tabPanels = {
        "cards-per-sheet": document.getElementById("tab-cards-per-sheet"),
        envelope: document.getElementById("tab-envelope"),
        "box-envelope": document.getElementById("tab-box-envelope"),
        "paper-usage": document.getElementById("tab-paper-usage"),
      };
      function activateTab(name) {
        tabButtons.forEach((btn) => {
          const active = btn.dataset.tab === name;
          btn.classList.toggle("border-blue-600", active);
          btn.classList.toggle("text-blue-600", active);
        });
        Object.entries(tabPanels).forEach(([key, panel]) => {
          panel.classList.toggle("hidden", key !== name);
        });
      }
      tabButtons.forEach((btn) => {
        btn.addEventListener("click", () => activateTab(btn.dataset.tab));
      });
      activateTab("cards-per-sheet");

      // Cards per sheet calculation
      function calcCardsPerSheet() {
        const sheetW = toInches(
          parseFloat(document.getElementById("sheet-width").value)
        );
        const sheetH = toInches(
          parseFloat(document.getElementById("sheet-height").value)
        );
        const cardWInput = toInches(
          parseFloat(document.getElementById("card-width").value)
        );
        const cardHInput = toInches(
          parseFloat(document.getElementById("card-height").value)
        );
        const folded = document.getElementById("folded-card").checked;
        const allowRotation = document.getElementById("allow-rotation").checked;
        const margin = toInches(
          parseFloat(document.getElementById("sheet-margin").value) || 0
        );
        const gap = toInches(
          parseFloat(document.getElementById("cut-gap").value) || 0
        );
        const numSheets =
          parseInt(document.getElementById("num-sheets").value, 10) || 1;

        const summaryEl = document.getElementById("cards-summary");
        const extraEl = document.getElementById("cards-extra");
        const detailsEl = document.getElementById("cards-details");
        const planEl = document.getElementById("cutting-plan");

        if (!sheetW || !sheetH || !cardWInput || !cardHInput) {
          summaryEl.textContent =
            "Please enter valid sheet and card dimensions.";
          extraEl.textContent = "";
          detailsEl.innerHTML = "";
          planEl.textContent = "";
          return;
        }

        // For folded cards, assume fold along height (so flat height doubles)
        let flatW = cardWInput;
        let flatH = cardHInput;
        if (folded) {
          // Double the smaller dimension by default (common for side/top fold)
          if (cardWInput <= cardHInput) {
            flatH = cardHInput * 2;
          } else {
            flatW = cardWInput * 2;
          }
        }

        const effW = sheetW - 2 * margin;
        const effH = sheetH - 2 * margin;
        if (effW <= 0 || effH <= 0) {
          summaryEl.textContent = "Margins are too large for this sheet size.";
          extraEl.textContent = "";
          detailsEl.innerHTML = "";
          planEl.textContent = "";
          return;
        }

        function fitCount(sw, sh, cw, ch) {
          const nx = Math.floor((sw + gap) / (cw + gap));
          const ny = Math.floor((sh + gap) / (ch + gap));
          return {
            nx: Math.max(nx, 0),
            ny: Math.max(ny, 0),
            total: Math.max(nx, 0) * Math.max(ny, 0),
          };
        }

        const portrait = fitCount(effW, effH, flatW, flatH);
        const landscape = allowRotation
          ? fitCount(effW, effH, flatH, flatW)
          : { total: -1 };

        let best, orientation;
        if (landscape.total > portrait.total) {
          best = landscape;
          orientation = "Rotate cards 90° (landscape on sheet)";
        } else {
          best = portrait;
          orientation = "Cards aligned without rotation (portrait on sheet)";
        }

        if (best.total <= 0) {
          summaryEl.textContent =
            "Card size is too large to fit on this sheet with the current margins and cut gap.";
          extraEl.textContent = "";
          detailsEl.innerHTML = "";
          planEl.textContent = "";
          return;
        }

        const totalCards = best.total * numSheets;
        const wasteW = effW - best.nx * flatW - (best.nx - 1) * gap;
        const wasteH = effH - best.ny * flatH - (best.ny - 1) * gap;
        const wasteArea =
          Math.max(wasteW, 0) * effH +
          Math.max(wasteH, 0) * effW -
          Math.max(wasteW, 0) * Math.max(wasteH, 0);
        const sheetArea = effW * effH;
        const usedArea = best.total * flatW * flatH;
        const efficiency = sheetArea > 0 ? (usedArea / sheetArea) * 100 : 0;

        const unitLabel = currentUnit === "in" ? "in" : "cm";

        summaryEl.textContent = `${best.total} card${
          best.total !== 1 ? "s" : ""
        } per sheet × ${numSheets} sheet${
          numSheets !== 1 ? "s" : ""
        } = ${totalCards} card${totalCards !== 1 ? "s" : ""} total.`;
        extraEl.textContent = `Layout efficiency: ${formatVal(
          efficiency,
          1
        )}% of usable sheet area.`;

        detailsEl.innerHTML = `
      <li>Orientation: ${orientation}</li>
      <li>Cards across: ${best.nx}</li>
      <li>Cards down: ${best.ny}</li>
      <li>Flat card size to cut: ${formatVal(fromInches(flatW))} × ${formatVal(
          fromInches(flatH)
        )} ${unitLabel}${folded ? " (before scoring)" : ""}</li>
      <li>Usable sheet area: ${formatVal(fromInches(effW))} × ${formatVal(
          fromInches(effH)
        )} ${unitLabel}</li>
      <li>Approx. waste strips: ${formatVal(
        fromInches(Math.max(wasteW, 0))
      )} ${unitLabel} (side), ${formatVal(
          fromInches(Math.max(wasteH, 0))
        )} ${unitLabel} (top/bottom)</li>
    `;

        let plan = "";
        plan += `1) Trim margins: leave ${formatVal(
          fromInches(margin)
        )} ${unitLabel} border on all sides.\n`;
        plan += `2) Cut ${best.nx} column${
          best.nx !== 1 ? "s" : ""
        } of width ~${formatVal(
          fromInches(flatW)
        )} ${unitLabel} each, with ${formatVal(
          fromInches(gap)
        )} ${unitLabel} gap for cutting.\n`;
        plan += `3) From each column, cut ${best.ny} row${
          best.ny !== 1 ? "s" : ""
        } of height ~${formatVal(fromInches(flatH))} ${unitLabel}.\n`;
        if (folded) {
          plan += `4) Score each piece along the fold at ${formatVal(
            fromInches(flatH / 2)
          )} ${unitLabel}.\n`;
        }
        plan += `\nTip: Always test with scrap cardstock before cutting your best paper.`;
        planEl.textContent = plan;
      }

      document
        .getElementById("calc-cards")
        .addEventListener("click", calcCardsPerSheet);
      document.getElementById("reset-cards").addEventListener("click", () => {
        document.getElementById("sheet-preset").value = "letter";
        document.getElementById("sheet-width").value = 8.5;
        document.getElementById("sheet-height").value = 11;
        document.getElementById("card-width").value = 4.25;
        document.getElementById("card-height").value = 5.5;
        document.getElementById("folded-card").checked = false;
        document.getElementById("allow-rotation").checked = true;
        document.getElementById("sheet-margin").value = 0.25;
        document.getElementById("cut-gap").value = 0.125;
        document.getElementById("num-sheets").value = 1;
        document.getElementById("cards-summary").textContent =
          "Enter your sheet and card sizes, then click “Calculate layout”.";
        document.getElementById("cards-extra").textContent = "";
        document.getElementById("cards-details").innerHTML = "";
        document.getElementById("cutting-plan").textContent = "";
      });

      // Envelope calculation (simplified punch-board style)
      const standardEnvelopesIn = [
        { name: "A2 (4.375 × 5.75 in)", w: 4.375, h: 5.75 },
        { name: "A6 (4.75 × 6.5 in)", w: 4.75, h: 6.5 },
        { name: "A7 (5.25 × 7.25 in)", w: 5.25, h: 7.25 },
        { name: "Square 5.5 × 5.5 in", w: 5.5, h: 5.5 },
        { name: "Square 6 × 6 in", w: 6, h: 6 },
      ];

      function calcEnvelope() {
        const cardW = toInches(
          parseFloat(document.getElementById("env-card-width").value)
        );
        const cardH = toInches(
          parseFloat(document.getElementById("env-card-height").value)
        );
        const clearance = toInches(
          parseFloat(document.getElementById("env-clearance").value) || 0
        );
        const largerTopFlap = document.getElementById("env-top-flap").checked;

        const summaryEl = document.getElementById("env-summary");
        const finishedEl = document.getElementById("env-finished");
        const standardEl = document.getElementById("env-standard");
        const layoutEl = document.getElementById("env-layout");

        if (!cardW || !cardH) {
          summaryEl.textContent = "Please enter a valid card width and height.";
          finishedEl.innerHTML = "";
          standardEl.textContent = "";
          layoutEl.textContent = "";
          return;
        }

        const innerW = cardW + 2 * clearance;
        const innerH = cardH + 2 * clearance;

        // Find closest standard
        let closest = null;
        let bestDiff = Infinity;
        standardEnvelopesIn.forEach((env) => {
          const diff = Math.abs(env.w - innerW) + Math.abs(env.h - innerH);
          if (diff < bestDiff) {
            bestDiff = diff;
            closest = env;
          }
        });

        const unitLabel = currentUnit === "in" ? "in" : "cm";
        summaryEl.textContent =
          "Custom envelope sized to your card with a small clearance.";
        finishedEl.innerHTML = `
      <li>Internal width: ${formatVal(fromInches(innerW))} ${unitLabel}</li>
      <li>Internal height: ${formatVal(fromInches(innerH))} ${unitLabel}</li>
      <li>Clearance: ${formatVal(
        fromInches(clearance)
      )} ${unitLabel} on each side</li>
    `;
        standardEl.textContent = closest
          ? `Closest standard: ${closest.name}. Your custom envelope is very similar in size.`
          : "No close standard size found.";

        // Simple layout: assume square starting sheet
        const sideFlap = innerW * 0.5;
        const bottomFlap = innerH * 0.5;
        const topFlap = largerTopFlap ? innerH * 0.6 : innerH * 0.5;
        const sheetSize = innerW + sideFlap * 2;

        let layout = "";
        layout += `Suggested starting square: ${formatVal(
          fromInches(sheetSize)
        )} × ${formatVal(fromInches(sheetSize))} ${unitLabel}\n\n`;
        layout += `Score lines (measured from each edge):\n`;
        layout += `- Side flaps: ${formatVal(
          fromInches(sideFlap)
        )} ${unitLabel} from left and right edges\n`;
        layout += `- Bottom flap: ${formatVal(
          fromInches(bottomFlap)
        )} ${unitLabel} from bottom edge\n`;
        layout += `- Top flap: ${formatVal(
          fromInches(topFlap)
        )} ${unitLabel} from top edge\n\n`;
        layout += `Cut away the small corner triangles where the score lines intersect.\nFold side flaps in first, then bottom, then top flap last.`;
        layoutEl.textContent = layout;
      }

      document
        .getElementById("calc-envelope")
        .addEventListener("click", calcEnvelope);

      // Box envelope calculation
      function calcBoxEnvelope() {
        const cardW = toInches(
          parseFloat(document.getElementById("box-card-width").value)
        );
        const cardH = toInches(
          parseFloat(document.getElementById("box-card-height").value)
        );
        const depth = toInches(
          parseFloat(document.getElementById("box-depth").value)
        );
        const clearance = toInches(
          parseFloat(document.getElementById("box-clearance").value) || 0
        );

        const summaryEl = document.getElementById("box-summary");
        const finishedEl = document.getElementById("box-finished");
        const layoutEl = document.getElementById("box-layout");

        if (!cardW || !cardH || !depth) {
          summaryEl.textContent =
            "Please enter valid card width, height and thickness.";
          finishedEl.innerHTML = "";
          layoutEl.textContent = "";
          return;
        }

        const innerW = cardW + 2 * clearance;
        const innerH = cardH + 2 * clearance;
        const innerD = depth + 2 * clearance;

        const unitLabel = currentUnit === "in" ? "in" : "cm";
        summaryEl.textContent =
          "Box envelope sized for dimensional cards with depth.";
        finishedEl.innerHTML = `
      <li>Internal width: ${formatVal(fromInches(innerW))} ${unitLabel}</li>
      <li>Internal height: ${formatVal(fromInches(innerH))} ${unitLabel}</li>
      <li>Internal depth: ${formatVal(fromInches(innerD))} ${unitLabel}</li>
    `;

        // Simple box envelope layout: rectangular sheet with depth flaps
        const sheetW = innerW + 2 * innerD + 2 * clearance;
        const sheetH = innerH + 2 * innerD + 2 * clearance;

        let layout = "";
        layout += `Cut starting rectangle: ${formatVal(
          fromInches(sheetW)
        )} × ${formatVal(fromInches(sheetH))} ${unitLabel}\n\n`;
        layout += `Score lines (from left/right edges):\n`;
        layout += `- Vertical scores at ${formatVal(
          fromInches(innerD + clearance)
        )} ${unitLabel} and ${formatVal(
          fromInches(innerD + clearance + innerW)
        )} ${unitLabel}\n\n`;
        layout += `Score lines (from top/bottom edges):\n`;
        layout += `- Horizontal scores at ${formatVal(
          fromInches(innerD + clearance)
        )} ${unitLabel} and ${formatVal(
          fromInches(innerD + clearance + innerH)
        )} ${unitLabel}\n\n`;
        layout += `Cut away the four outer corner rectangles formed by the score lines.\nFold along all scores to form a shallow box, then glue the side flaps.\nTop and bottom panels act as closing flaps.`;
        layoutEl.textContent = layout;
      }

      document
        .getElementById("calc-box")
        .addEventListener("click", calcBoxEnvelope);

      // Paper usage
      function calcUsage() {
        const cardsNeeded =
          parseInt(document.getElementById("usage-cards-needed").value, 10) ||
          0;
        const cardsPerSheet =
          parseInt(
            document.getElementById("usage-cards-per-sheet").value,
            10
          ) || 0;
        const sheetsPerPack =
          parseInt(
            document.getElementById("usage-sheets-per-pack").value,
            10
          ) || 0;
        const packPrice =
          parseFloat(document.getElementById("usage-pack-price").value) || 0;

        const includeEnv = document.getElementById("usage-include-env").checked;
        const envPerPack =
          parseInt(document.getElementById("usage-env-per-pack").value, 10) ||
          0;
        const envPackPrice =
          parseFloat(document.getElementById("usage-env-pack-price").value) ||
          0;

        const summaryEl = document.getElementById("usage-summary");
        const cardEl = document.getElementById("usage-cardstock");
        const envEl = document.getElementById("usage-envelopes");

        if (!cardsNeeded || !cardsPerSheet || !sheetsPerPack) {
          summaryEl.textContent =
            "Please enter cards needed, cards per sheet, and sheets per pack.";
          cardEl.innerHTML = "";
          envEl.innerHTML = "";
          return;
        }

        const sheetsNeeded = Math.ceil(cardsNeeded / cardsPerSheet);
        const packsNeeded = Math.ceil(sheetsNeeded / sheetsPerPack);
        const cardstockCost = packsNeeded * packPrice;
        const costPerCard = cardsNeeded ? cardstockCost / cardsNeeded : 0;

        summaryEl.textContent =
          "Estimated cardstock and envelope usage for your project.";
        cardEl.innerHTML = `
      <li>Cards needed: ${cardsNeeded}</li>
      <li>Cards per sheet: ${cardsPerSheet}</li>
      <li>Sheets of cardstock required: ${sheetsNeeded}</li>
      <li>Packs of cardstock (× ${sheetsPerPack} sheets): ${packsNeeded}</li>
      <li>Estimated cardstock cost: $${formatVal(cardstockCost, 2)}</li>
      <li>Approx. cardstock cost per card: $${formatVal(costPerCard, 3)}</li>
    `;

        if (!includeEnv || !envPerPack) {
          envEl.innerHTML =
            "<li>Envelope calculation disabled. Tick “Include envelopes?” to estimate envelope packs and cost.</li>";
          return;
        }

        const envPacksNeeded = Math.ceil(cardsNeeded / envPerPack);
        const envCost = envPacksNeeded * envPackPrice;
        const envCostPerCard = cardsNeeded ? envCost / cardsNeeded : 0;

        envEl.innerHTML = `
      <li>Envelopes needed: ${cardsNeeded}</li>
      <li>Envelopes per pack: ${envPerPack}</li>
      <li>Packs of envelopes: ${envPacksNeeded}</li>
      <li>Estimated envelope cost: $${formatVal(envCost, 2)}</li>
      <li>Approx. envelope cost per card: $${formatVal(envCostPerCard, 3)}</li>
    `;
      }

      document
        .getElementById("calc-usage")
        .addEventListener("click", calcUsage);

      // Initialize with a default cards-per-sheet calculation
      calcCardsPerSheet();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
