    <script>
      // UI helpers
      const raceSelect = document.getElementById("race");
      const raceLegacyRow = document.getElementById("race-legacy-row");
      const useBsaCheckbox = document.getElementById("use-bsa");
      const bsaInputs = document.getElementById("bsa-inputs");
      const calcBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorBox = document.getElementById("gfr-error");
      const resultsSection = document.getElementById("results-section");
      const egfrMainEl = document.getElementById("egfr-main");
      const egfrAbsRow = document.getElementById("egfr-abs-row");
      const egfrAbsEl = document.getElementById("egfr-abs");
      const egfrLegacyRow = document.getElementById("egfr-legacy-row");
      const egfrLegacyEl = document.getElementById("egfr-legacy");
      const ckdStageEl = document.getElementById("ckd-stage");
      const ckdDescEl = document.getElementById("ckd-desc");
      const alertBox = document.getElementById("alert-box");

      raceSelect.addEventListener("change", () => {
        if (raceSelect.value === "black") {
          raceLegacyRow.classList.remove("hidden");
        } else {
          raceLegacyRow.classList.add("hidden");
        }
      });

      useBsaCheckbox.addEventListener("change", () => {
        if (useBsaCheckbox.checked) {
          bsaInputs.classList.remove("hidden");
        } else {
          bsaInputs.classList.add("hidden");
        }
      });

      function toMgDl(value, unit) {
        if (!value || isNaN(value)) return NaN;
        return unit === "umol" ? value / 88.4 : value;
      }

      function calcBSA(heightCm, weightKg) {
        if (!heightCm || !weightKg) return NaN;
        return 0.007184 * Math.pow(heightCm, 0.725) * Math.pow(weightKg, 0.425);
      }

      function calcEgfr2021(age, sex, scrMgDl) {
        const kappa = sex === "female" ? 0.7 : 0.9;
        const alpha = sex === "female" ? -0.241 : -0.302;
        const sexFactor = sex === "female" ? 1.012 : 1.0;
        const scrK = scrMgDl / kappa;
        const minPart = Math.min(scrK, 1);
        const maxPart = Math.max(scrK, 1);
        return (
          142 *
          Math.pow(minPart, alpha) *
          Math.pow(maxPart, -1.2) *
          Math.pow(0.9938, age) *
          sexFactor
        );
      }

      function calcEgfr2009(age, sex, scrMgDl, isBlack) {
        const kappa = sex === "female" ? 0.7 : 0.9;
        const alpha = sex === "female" ? -0.329 : -0.411;
        const sexFactor = sex === "female" ? 1.018 : 1.0;
        const raceFactor = isBlack ? 1.159 : 1.0;
        const scrK = scrMgDl / kappa;
        const minPart = Math.min(scrK, 1);
        const maxPart = Math.max(scrK, 1);
        return (
          141 *
          Math.pow(minPart, alpha) *
          Math.pow(maxPart, -1.209) *
          Math.pow(0.993, age) *
          sexFactor *
          raceFactor
        );
      }

      function classifyCKD(egfr) {
        if (isNaN(egfr))
          return { stage: "--", desc: "Unable to classify CKD stage." };
        if (egfr >= 90)
          return {
            stage: "G1",
            desc: "Normal or high kidney function. CKD only if other kidney damage markers are present.",
          };
        if (egfr >= 60)
          return {
            stage: "G2",
            desc: "Mildly decreased kidney function. Interpret with urine tests and risk factors.",
          };
        if (egfr >= 45)
          return {
            stage: "G3a",
            desc: "Mild to moderately decreased kidney function. Consider nephrology evaluation if persistent.",
          };
        if (egfr >= 30)
          return {
            stage: "G3b",
            desc: "Moderately to severely decreased kidney function. Higher risk of complications.",
          };
        if (egfr >= 15)
          return {
            stage: "G4",
            desc: "Severely decreased kidney function. Preparation for possible kidney replacement therapy.",
          };
        return {
          stage: "G5",
          desc: "Kidney failure. Urgent specialist management is required.",
        };
      }

      function updateAlert(egfr) {
        alertBox.classList.add("hidden");
        alertBox.textContent = "";
        alertBox.className = "mt-3 text-sm rounded-md px-3 py-2 hidden";

        if (isNaN(egfr)) return;

        if (egfr < 60) {
          alertBox.textContent =
            "eGFR is below 60 mL/min/1.73 m². Persistent reduction over 3 months may indicate chronic kidney disease. Please discuss this result with your doctor.";
          alertBox.classList.remove("hidden");
          alertBox.classList.add(
            "bg-red-50",
            "text-red-800",
            "border",
            "border-red-200"
          );
        } else if (egfr >= 60 && egfr < 90) {
          alertBox.textContent =
            "Mildly reduced eGFR. In older adults this may be acceptable, but interpretation depends on urine tests and overall risk profile.";
          alertBox.classList.remove("hidden");
          alertBox.classList.add(
            "bg-yellow-50",
            "text-yellow-800",
            "border",
            "border-yellow-200"
          );
        } else {
          alertBox.textContent =
            "eGFR is in the normal range. Always interpret together with urine tests and clinical context.";
          alertBox.classList.remove("hidden");
          alertBox.classList.add(
            "bg-green-50",
            "text-green-800",
            "border",
            "border-green-200"
          );
        }
      }

      calcBtn.addEventListener("click", () => {
        errorBox.classList.add("hidden");
        const age = parseFloat(document.getElementById("age").value);
        const scr = parseFloat(document.getElementById("scr").value);
        const scrUnit = document.getElementById("scr-unit").value;
        const sex =
          document.querySelector('input[name="sex"]:checked')?.value ||
          "female";

        if (!age || age < 18 || !scr || scr <= 0) {
          errorBox.textContent =
            "Please enter a valid age (≥18) and serum creatinine value.";
          errorBox.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const scrMgDl = toMgDl(scr, scrUnit);
        if (isNaN(scrMgDl) || scrMgDl <= 0) {
          errorBox.textContent = "Serum creatinine value is not valid.";
          errorBox.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const egfr2021 = calcEgfr2021(age, sex, scrMgDl);
        if (!isFinite(egfr2021) || egfr2021 <= 0) {
          errorBox.textContent =
            "Unable to compute eGFR with the provided values.";
          errorBox.classList.remove("hidden");
          resultsSection.classList.add("hidden");
          return;
        }

        const egfrRounded = Math.round(egfr2021);
        egfrMainEl.textContent = egfrRounded + " mL/min/1.73 m²";

        // BSA / absolute GFR
        if (useBsaCheckbox.checked) {
          const height = parseFloat(document.getElementById("height").value);
          const weight = parseFloat(document.getElementById("weight").value);
          const bsa = calcBSA(height, weight);
          if (!isNaN(bsa) && bsa > 0) {
            const absGfr = egfr2021 * (bsa / 1.73);
            egfrAbsEl.textContent =
              Math.round(absGfr) + " mL/min (BSA " + bsa.toFixed(2) + " m²)";
            egfrAbsRow.classList.remove("hidden");
          } else {
            egfrAbsRow.classList.add("hidden");
          }
        } else {
          egfrAbsRow.classList.add("hidden");
        }

        // Legacy 2009 equation if selected
        if (raceSelect.value === "black") {
          const raceLegacy =
            document.querySelector('input[name="raceLegacy"]:checked')?.value ||
            "nonblack";
          const isBlack = raceLegacy === "black";
          const egfr2009 = calcEgfr2009(age, sex, scrMgDl, isBlack);
          if (isFinite(egfr2009) && egfr2009 > 0) {
            egfrLegacyEl.textContent = Math.round(egfr2009) + " mL/min/1.73 m²";
            egfrLegacyRow.classList.remove("hidden");
          } else {
            egfrLegacyRow.classList.add("hidden");
          }
        } else {
          egfrLegacyRow.classList.add("hidden");
        }

        const ckd = classifyCKD(egfr2021);
        ckdStageEl.textContent = ckd.stage;
        ckdDescEl.textContent = ckd.desc;
        updateAlert(egfr2021);

        resultsSection.classList.remove("hidden");
      });

      resetBtn.addEventListener("click", () => {
        document.getElementById("gfr-form").reset();
        raceLegacyRow.classList.add("hidden");
        bsaInputs.classList.add("hidden");
        resultsSection.classList.add("hidden");
        errorBox.classList.add("hidden");
        alertBox.classList.add("hidden");
      });

      // Mobile menu
      document
        .getElementById("mobile-menu-toggle")
        .addEventListener("click", function () {
          const menu = document.getElementById("mobile-menu");
          const expanded = this.getAttribute("aria-expanded") === "true";
          this.setAttribute("aria-expanded", String(!expanded));
          menu.classList.toggle("hidden");
        });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
