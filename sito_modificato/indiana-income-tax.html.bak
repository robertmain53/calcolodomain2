    <script>
      // Simple federal tax estimator (very rough, for illustration only)
      function estimateFederalTax(income, filingStatus) {
        if (income <= 0) return 0;

        // 2024-like brackets (approximate, single baseline)
        const bracketsSingle = [
          { upTo: 11600, rate: 0.1 },
          { upTo: 47150, rate: 0.12 },
          { upTo: 100525, rate: 0.22 },
          { upTo: 191950, rate: 0.24 },
          { upTo: 243725, rate: 0.32 },
          { upTo: 609350, rate: 0.35 },
          { upTo: Infinity, rate: 0.37 },
        ];

        // Adjust brackets crudely for other statuses
        let brackets;
        switch (filingStatus) {
          case "married_joint":
            brackets = bracketsSingle.map((b) => ({
              upTo: b.upTo * 2,
              rate: b.rate,
            }));
            break;
          case "hoh":
            brackets = bracketsSingle.map((b) => ({
              upTo: b.upTo * 1.5,
              rate: b.rate,
            }));
            break;
          case "married_separate":
            brackets = bracketsSingle;
            break;
          default:
            brackets = bracketsSingle;
        }

        // Standard deduction approximation
        let stdDeduction = 14600; // single
        if (filingStatus === "married_joint") stdDeduction = 29200;
        else if (filingStatus === "hoh") stdDeduction = 21900;
        else if (filingStatus === "married_separate") stdDeduction = 14600;

        let taxable = Math.max(0, income - stdDeduction);
        let tax = 0;
        let prevLimit = 0;

        for (const b of brackets) {
          if (taxable <= 0) break;
          const amountInBracket = Math.min(taxable, b.upTo - prevLimit);
          tax += amountInBracket * b.rate;
          taxable -= amountInBracket;
          prevLimit = b.upTo;
        }

        return tax;
      }

      function formatCurrency(value) {
        return value.toLocaleString("en-US", {
          style: "currency",
          currency: "USD",
          maximumFractionDigits: 0,
        });
      }

      function formatPercent(value) {
        return (value * 100).toFixed(2) + "%";
      }

      document
        .getElementById("calc-btn")
        .addEventListener("click", function () {
          const filingStatus = document.getElementById("filing-status").value;
          const taxYear = document.getElementById("tax-year").value;
          const income =
            parseFloat(document.getElementById("gross-income").value) || 0;
          const countyRateInput =
            parseFloat(document.getElementById("county-rate").value) || 0;
          const pretax =
            parseFloat(document.getElementById("pretax-deductions").value) || 0;
          const includeFederal =
            document.getElementById("include-federal").checked;

          const taxableBase = Math.max(0, income - pretax);

          // Approximate Indiana state flat rate by year
          let stateRate = 0.0315; // default 2023
          if (taxYear === "2024") {
            stateRate = 0.0305;
          }

          const countyRate = countyRateInput / 100;

          const stateTax = taxableBase * stateRate;
          const countyTax = taxableBase * countyRate;
          const totalInTax = stateTax + countyTax;

          let federalTax = 0;
          if (includeFederal) {
            federalTax = estimateFederalTax(income, filingStatus);
          }

          const totalTax = totalInTax + federalTax;
          const netIncome = Math.max(0, income - totalTax);
          const effectiveInRate = income > 0 ? totalInTax / income : 0;

          // Update UI
          document.getElementById("state-tax").textContent =
            formatCurrency(stateTax);
          document.getElementById("county-tax").textContent =
            formatCurrency(countyTax);
          document.getElementById("total-in-tax").textContent =
            formatCurrency(totalInTax);
          document.getElementById("effective-rate").textContent =
            "Effective state + county rate: " + formatPercent(effectiveInRate);

          document.getElementById("federal-tax").textContent =
            formatCurrency(federalTax);
          document.getElementById("total-tax").textContent =
            formatCurrency(totalTax);
          document.getElementById("net-income").textContent =
            formatCurrency(netIncome);
          document.getElementById("net-income-label").textContent =
            includeFederal
              ? "Estimated after federal + Indiana income tax"
              : "Estimated after Indiana state & county income tax";

          document.getElementById("taxable-income-breakdown").textContent =
            formatCurrency(taxableBase);
          document.getElementById("state-rate-breakdown").textContent =
            (stateRate * 100).toFixed(2) + "%";
          document.getElementById("county-rate-breakdown").textContent =
            countyRateInput.toFixed(2) + "%";
          document.getElementById("combined-rate-breakdown").textContent =
            ((stateRate + countyRate) * 100).toFixed(2) + "%";
        });

      // Initial calculation on load
      window.addEventListener("DOMContentLoaded", () => {
        document.getElementById("calc-btn").click();
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
