    <script>
      // Medication reference data
      const DRUGS = {
        amoxicillin: {
          name: "Amoxicillin",
          minDose: 10,
          maxDose: 20,
          unit: "mg",
          frequency: "Every 12 hours (q12h), oral",
        },
        clavamox: {
          name: "Amoxicillin–clavulanate",
          minDose: 12.5,
          maxDose: 25,
          unit: "mg",
          frequency: "Every 12 hours (q12h), oral",
        },
        doxycycline: {
          name: "Doxycycline",
          minDose: 5,
          maxDose: 10,
          unit: "mg",
          frequency: "Every 12–24 hours (q12–24h), oral",
        },
        metronidazole: {
          name: "Metronidazole",
          minDose: 7.5,
          maxDose: 15,
          unit: "mg",
          frequency: "Every 12 hours (q12h), oral",
        },
        prednisolone: {
          name: "Prednisolone",
          minDose: 0.5,
          maxDose: 2,
          unit: "mg",
          frequency: "Every 24 hours (q24h), oral (varies by indication)",
        },
        gabapentin: {
          name: "Gabapentin",
          minDose: 5,
          maxDose: 10,
          unit: "mg",
          frequency: "Every 8–12 hours (q8–12h), oral",
        },
        buprenorphine: {
          name: "Buprenorphine",
          minDose: 0.01,
          maxDose: 0.02,
          unit: "mg",
          frequency: "Every 8–12 hours (q8–12h), transmucosal",
        },
        ondansetron: {
          name: "Ondansetron",
          minDose: 0.1,
          maxDose: 0.5,
          unit: "mg",
          frequency: "Every 8–12 hours (q8–12h), oral/IV",
        },
        maropitant: {
          name: "Maropitant (Cerenia)",
          minDose: 1,
          maxDose: 1,
          unit: "mg",
          frequency: "Every 24 hours (q24h), oral/SC",
        },
        insulin_glargine: {
          name: "Insulin glargine",
          minDose: 0.25,
          maxDose: 0.5,
          unit: "units",
          frequency: "Every 12 hours (q12h), subcutaneous",
        },
      };

      function roundTo(value, step) {
        if (!isFinite(value) || !isFinite(step) || step <= 0) return value;
        return Math.round(value / step) * step;
      }

      document.addEventListener("DOMContentLoaded", () => {
        const drugSelect = document.getElementById("drug");
        const customRow = document.getElementById("custom-dose-row");
        const calcBtn = document.getElementById("calculate-btn");

        drugSelect.addEventListener("change", () => {
          if (drugSelect.value === "custom") {
            customRow.classList.remove("hidden");
          } else {
            customRow.classList.add("hidden");
          }
        });

        calcBtn.addEventListener("click", () => {
          const weightInput = parseFloat(
            document.getElementById("weight").value
          );
          const weightUnit =
            document.querySelector("input[name='weightUnit']:checked")?.value ||
            "kg";

          if (!weightInput || weightInput <= 0) {
            alert("Please enter a valid cat weight greater than 0.");
            return;
          }

          // Convert to kg if needed
          const weightKg =
            weightUnit === "lb" ? weightInput * 0.45359237 : weightInput;

          const drugKey = drugSelect.value;
          let minDose, maxDose, unit, frequency, drugName;

          if (drugKey === "custom") {
            const customMin = parseFloat(
              document.getElementById("custom-dose-min").value
            );
            const customMax = parseFloat(
              document.getElementById("custom-dose-max").value
            );
            const customUnit =
              document.getElementById("custom-dose-unit").value;

            if (
              !customMin ||
              !customMax ||
              customMin <= 0 ||
              customMax <= 0 ||
              customMax < customMin
            ) {
              alert(
                "Please enter a valid custom dose range (min and max > 0, max ≥ min)."
              );
              return;
            }

            minDose = customMin;
            maxDose = customMax;
            unit = customUnit === "mg" ? "mg" : "units";
            frequency = "Use the frequency provided by your veterinarian.";
            drugName = "Custom medication";
          } else {
            const d = DRUGS[drugKey];
            if (!d) {
              alert("Unknown medication selection.");
              return;
            }
            minDose = d.minDose;
            maxDose = d.maxDose;
            unit = d.unit;
            frequency = d.frequency;
            drugName = d.name;
          }

          // Total dose per administration
          const totalMin = weightKg * minDose;
          const totalMax = weightKg * maxDose;

          const roundingStep =
            parseFloat(document.getElementById("rounding").value) || 0.1;
          const totalMinRounded = roundTo(totalMin, roundingStep);
          const totalMaxRounded = roundTo(totalMax, roundingStep);

          // Update basic results
          const resultWeightEl = document.getElementById("result-weight");
          resultWeightEl.textContent = `${weightKg.toFixed(
            2
          )} kg (input: ${weightInput} ${weightUnit})`;

          const resultDoseRangeEl =
            document.getElementById("result-dose-range");
          if (Math.abs(totalMinRounded - totalMaxRounded) < 1e-6) {
            resultDoseRangeEl.textContent = `${totalMinRounded.toFixed(
              2
            )} ${unit} per dose`;
          } else {
            resultDoseRangeEl.textContent = `${totalMinRounded.toFixed(
              2
            )}–${totalMaxRounded.toFixed(2)} ${unit} per dose`;
          }

          const resultFrequencyEl = document.getElementById("result-frequency");
          resultFrequencyEl.textContent = `${drugName}: ${frequency}`;

          // Formulation calculations
          const strength = parseFloat(
            document.getElementById("strength").value
          );
          const strengthUnit = document.getElementById("strength-unit").value;
          const formulationBlock = document.getElementById(
            "result-formulation-block"
          );
          const formulationRangeEl = document.getElementById(
            "result-formulation-range"
          );
          const formulationNoteEl = document.getElementById(
            "result-formulation-note"
          );

          if (strength && strength > 0) {
            let minAmount, maxAmount, amountUnit, note;

            if (strengthUnit === "mg_per_tab") {
              // tablets or capsules
              minAmount = totalMin / strength;
              maxAmount = totalMax / strength;
              amountUnit = "tablets";
              note =
                "Rounded tablet fractions should always be confirmed with your veterinarian.";
            } else if (strengthUnit === "mg_per_ml") {
              if (unit !== "mg") {
                alert(
                  "For mg/mL formulations, the dose must be in mg/kg. Please choose a compatible medication or custom mg/kg dose."
                );
                return;
              }
              minAmount = totalMin / strength;
              maxAmount = totalMax / strength;
              amountUnit = "mL";
              note = "Use an oral syringe for accurate liquid measurements.";
            } else if (strengthUnit === "units_per_ml") {
              if (unit !== "units") {
                alert(
                  "For units/mL formulations, the dose must be in units/kg. Please choose a compatible medication or custom units/kg dose."
                );
                return;
              }
              minAmount = totalMin / strength;
              maxAmount = totalMax / strength;
              amountUnit = "mL";
              note =
                "Insulin dosing must be confirmed with your veterinarian and matched to the correct syringe type (U-40, U-100, etc.).";
            } else {
              formulationBlock.classList.add("hidden");
              return;
            }

            const minRounded = roundTo(minAmount, roundingStep);
            const maxRounded = roundTo(maxAmount, roundingStep);

            if (Math.abs(minRounded - maxRounded) < 1e-6) {
              formulationRangeEl.textContent = `${minRounded.toFixed(
                2
              )} ${amountUnit} per dose`;
            } else {
              formulationRangeEl.textContent = `${minRounded.toFixed(
                2
              )}–${maxRounded.toFixed(2)} ${amountUnit} per dose`;
            }
            formulationNoteEl.textContent = note;
            formulationBlock.classList.remove("hidden");
          } else {
            formulationBlock.classList.add("hidden");
          }

          document.getElementById("results").classList.remove("hidden");
          document
            .getElementById("results")
            .scrollIntoView({ behavior: "smooth", block: "start" });
        });
      });
    </script>

