    <script>
      // Priming sugar calculator logic
      (function () {
        const beerVolumeEl = document.getElementById("beer-volume");
        const volumeUnitEl = document.getElementById("volume-unit");
        const beerTempEl = document.getElementById("beer-temp");
        const tempUnitEl = document.getElementById("temp-unit");
        const styleSelectEl = document.getElementById("style-select");
        const targetCo2El = document.getElementById("target-co2");
        const sugarTypeEl = document.getElementById("sugar-type");
        const customYieldEl = document.getElementById("custom-yield");
        const customFermentableRow = document.getElementById(
          "custom-fermentable-row"
        );
        const bottleSizeEl = document.getElementById("bottle-size");
        const bottleCustomWrapper = document.getElementById(
          "bottle-custom-wrapper"
        );
        const bottleCustomEl = document.getElementById("bottle-custom");

        const totalSugarGEl = document.getElementById("total-sugar-g");
        const totalSugarOzEl = document.getElementById("total-sugar-oz");
        const perBottleGEl = document.getElementById("per-bottle-g");
        const bottleCountEl = document.getElementById("bottle-count");
        const residualTempLabelEl = document.getElementById(
          "residual-temp-label"
        );
        const residualCo2El = document.getElementById("residual-co2");
        const deltaCo2El = document.getElementById("delta-co2");

        const styleDefaults = {
          custom: null,
          british_ale: 1.9,
          american_ale: 2.4,
          belgian_ale: 2.7,
          wheat_beer: 3.0,
          saison: 3.0,
          lager: 2.5,
          stout_porter: 2.0,
          sour: 2.7,
        };

        const sugarFactors = {
          // relative to fully fermentable dry sugar
          corn_sugar: 1.0,
          table_sugar: 0.97, // needs slightly less by weight
          dme: 0.68,
          honey: 0.74,
        };

        function toCelsius(value, unit) {
          return unit === "F" ? ((value - 32) * 5) / 9 : value;
        }

        function litersFromVolume(value, unit) {
          return unit === "gal" ? value * 3.78541 : value;
        }

        function calcResidualCO2(tempC) {
          // empirical fit; clamp to reasonable range
          const t = tempC;
          let v = 3.0378 - 0.050062 * t + 0.00026555 * t * t;
          if (v < 0) v = 0;
          return v;
        }

        function getSugarFactor() {
          const type = sugarTypeEl.value;
          if (type === "custom") {
            const f = parseFloat(customYieldEl.value);
            return isFinite(f) && f > 0 ? f : 0.82;
          }
          return sugarFactors[type] || 1.0;
        }

        function getBottleSizeL() {
          if (bottleSizeEl.value === "custom") {
            const v = parseFloat(bottleCustomEl.value);
            return isFinite(v) && v > 0 ? v : 0.33;
          }
          const v = parseFloat(bottleSizeEl.value);
          return isFinite(v) && v > 0 ? v : 0.33;
        }

        function recalc() {
          const volInput = parseFloat(beerVolumeEl.value);
          const tempInput = parseFloat(beerTempEl.value);
          let targetCo2 = parseFloat(targetCo2El.value);

          if (!isFinite(volInput) || volInput <= 0 || !isFinite(tempInput)) {
            totalSugarGEl.textContent = "0.0";
            totalSugarOzEl.textContent = "0.00";
            perBottleGEl.textContent = "0.0";
            bottleCountEl.textContent = "0";
            return;
          }

          const volL = litersFromVolume(volInput, volumeUnitEl.value);
          const tempC = toCelsius(tempInput, tempUnitEl.value);
          const residual = calcResidualCO2(tempC);

          if (!isFinite(targetCo2) || targetCo2 < 1) targetCo2 = 2.4;
          const delta = Math.max(targetCo2 - residual, 0);

          // base constant for fully fermentable dry sugar (approx)
          const baseK = 4.0; // g/L/vol for dextrose
          const factor = getSugarFactor();
          const kEffective = baseK / factor;

          const grams = volL * delta * kEffective;
          const gramsClamped = grams < 0 ? 0 : grams;
          const ounces = gramsClamped / 28.3495;

          const bottleSizeL = getBottleSizeL();
          const bottleCount =
            bottleSizeL > 0 ? Math.floor(volL / bottleSizeL + 0.0001) : 0;
          const perBottleG = bottleCount > 0 ? gramsClamped / bottleCount : 0;

          totalSugarGEl.textContent = gramsClamped.toFixed(1);
          totalSugarOzEl.textContent = ounces.toFixed(2);
          perBottleGEl.textContent = perBottleG.toFixed(1);
          bottleCountEl.textContent = bottleCount.toString();
          residualTempLabelEl.textContent = tempC.toFixed(1);
          residualCo2El.textContent = residual.toFixed(2);
          deltaCo2El.textContent = delta.toFixed(2);
        }

        // Event bindings
        [
          beerVolumeEl,
          volumeUnitEl,
          beerTempEl,
          tempUnitEl,
          targetCo2El,
          sugarTypeEl,
          customYieldEl,
          bottleSizeEl,
          bottleCustomEl,
        ].forEach((el) => {
          el.addEventListener("input", recalc);
          el.addEventListener("change", recalc);
        });

        styleSelectEl.addEventListener("change", () => {
          const style = styleSelectEl.value;
          if (styleDefaults[style]) {
            targetCo2El.value = styleDefaults[style].toFixed(1);
          }
          recalc();
        });

        document.querySelectorAll("[data-style-preset]").forEach((btn) => {
          btn.addEventListener("click", () => {
            const style = btn.getAttribute("data-style-preset");
            if (styleDefaults[style]) {
              styleSelectEl.value = style;
              targetCo2El.value = styleDefaults[style].toFixed(1);
              recalc();
            }
          });
        });

        sugarTypeEl.addEventListener("change", () => {
          if (sugarTypeEl.value === "custom") {
            customFermentableRow.classList.remove("hidden");
          } else {
            customFermentableRow.classList.add("hidden");
          }
          recalc();
        });

        bottleSizeEl.addEventListener("change", () => {
          if (bottleSizeEl.value === "custom") {
            bottleCustomWrapper.classList.remove("hidden");
          } else {
            bottleCustomWrapper.classList.add("hidden");
          }
          recalc();
        });

        // Initial calculation
        recalc();
      })();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
