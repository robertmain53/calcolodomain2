    <script>
      // Unit toggle
      const unitButtons = document.querySelectorAll(".unit-btn");
      let currentUnit = "cm";

      unitButtons.forEach((btn) => {
        btn.addEventListener("click", () => {
          unitButtons.forEach((b) =>
            b.classList.remove("bg-blue-600", "text-white")
          );
          unitButtons.forEach((b) =>
            b.classList.add("bg-white", "text-gray-700")
          );
          btn.classList.add("bg-blue-600", "text-white");
          btn.classList.remove("bg-white", "text-gray-700");
          currentUnit = btn.id === "unit-in" ? "in" : "cm";
        });
      });

      function getNumber(id) {
        const v = parseFloat(
          document.getElementById(id).value.replace(",", ".")
        );
        return isNaN(v) ? null : v;
      }

      function round2(x) {
        return Math.round(x * 100) / 100;
      }

      function classifyBodyShape(shoulders, bust, waist, hips) {
        // Basic validation: require at least bust, waist, hips
        if (!bust || !waist || !hips) return null;

        const diff = (a, b) => a - b;
        const pctDiff = (a, b) => (b === 0 ? 0 : ((a - b) / b) * 100);

        const bustHipsDiffPct = Math.abs(pctDiff(bust, hips));
        const shouldersHipsDiffPct = shoulders ? pctDiff(shoulders, hips) : 0;
        const waistBustRatio = waist / bust;
        const waistHipsRatio = waist / hips;

        let primary = "Rectangle";
        let secondary = "Balanced / between shapes";
        let summary = "";
        let styleText = "";
        let styleList = [];

        const hasDefinedWaist =
          waistBustRatio <= 0.75 && waistHipsRatio <= 0.75;
        const bustLargerThanHips = pctDiff(bust, hips) > 5;
        const hipsLargerThanBust = pctDiff(hips, bust) > 5;
        const shouldersLargerThanHips = shoulders && shouldersHipsDiffPct > 5;
        const hipsLargerThanShoulders = shoulders && -shouldersHipsDiffPct > 5;

        if (bustHipsDiffPct < 5 && hasDefinedWaist) {
          primary = "Hourglass";
          summary =
            "Your bust and hips are balanced with a clearly defined waist.";
          styleText =
            "You have naturally balanced curves. Highlight your waist and keep your overall silhouette proportional.";
          styleList = [
            "Choose wrap dresses, belted coats and high‑waisted skirts to emphasize your waist.",
            "Opt for medium‑weight fabrics that follow your curves without clinging.",
            "V‑neck and scoop necklines flatter your bust without adding bulk.",
            "Straight, slim or slightly flared trousers keep your top and bottom balanced.",
          ];
          if (hipsLargerThanShoulders)
            secondary = "Hourglass with pear tendency";
          else if (shouldersLargerThanHips)
            secondary = "Hourglass with inverted triangle tendency";
          else secondary = "Classic hourglass";
        } else if (
          hipsLargerThanBust &&
          (hipsLargerThanShoulders || !shoulders)
        ) {
          primary = "Pear (Triangle)";
          summary =
            "Your hips are noticeably wider than your bust and/or shoulders.";
          styleText =
            "Your lower body is more prominent. Use color and details to draw the eye upward and balance your silhouette.";
          styleList = [
            "Wear lighter colors, prints and interesting necklines on top.",
            "Choose darker, simple bottoms with clean lines.",
            "A‑line skirts and bootcut or wide‑leg trousers balance your hips.",
            "Structured jackets ending above or at the hip bone avoid cutting across the widest point.",
          ];
          secondary = hasDefinedWaist
            ? "Pear with hourglass tendency"
            : "Soft pear / triangle";
        } else if (shouldersLargerThanHips || bustLargerThanHips) {
          primary = "Inverted Triangle";
          summary = "Your shoulders and/or bust are broader than your hips.";
          styleText =
            "Your upper body is more prominent. Soften the shoulders and add volume to the lower body for balance.";
          styleList = [
            "Prefer V‑necks and wrap tops over boat necks or very wide shoulders.",
            "Keep tops simple and fitted; avoid heavy shoulder pads or big ruffles.",
            "Add volume below with wide‑leg, flared or palazzo trousers and A‑line skirts.",
            "Use darker colors on top and lighter or textured fabrics on the bottom.",
          ];
          secondary = hasDefinedWaist
            ? "Inverted triangle with hourglass waist"
            : "Strong inverted triangle";
        } else if (waistBustRatio > 0.85 && waistHipsRatio > 0.85) {
          primary = "Apple (Round)";
          summary =
            "Your waist is similar to or larger than your bust and hips.";
          styleText =
            "You tend to carry more volume around the midsection. The goal is to create gentle vertical lines and avoid clinging fabrics at the waist.";
          styleList = [
            "Look for empire waistlines and A‑line dresses that skim over the tummy.",
            "Choose soft, flowing fabrics that do not cling to the midsection.",
            "V‑necks and open necklines draw attention upward to your face.",
            "Show off your legs with skirts and dresses that hit above the knee if you enjoy them.",
          ];
          secondary = hipsLargerThanBust
            ? "Apple with pear tendency"
            : "Classic apple / round";
        } else {
          primary = "Rectangle";
          summary =
            "Your bust, waist and hips are relatively similar in measurement.";
          styleText =
            "Your silhouette is fairly straight. You can create the illusion of more curves with strategic cuts and details.";
          styleList = [
            "Use belts, wrap styles and peplum tops to visually define the waist.",
            "Experiment with textures, pleats and draping to add dimension.",
            "High‑rise trousers and skirts can create a more defined waistline.",
            "Color blocking at the waist or hips can suggest curves.",
          ];
          if (hasDefinedWaist)
            secondary = "Soft rectangle with slight hourglass tendency";
          else secondary = "Straight / athletic rectangle";
        }

        return {
          primary,
          secondary,
          summary,
          styleText,
          styleList,
          metrics: {
            waistBustRatio,
            waistHipsRatio,
            bustHipsDiffPct,
            shouldersHipsDiffPct,
          },
        };
      }

      document.getElementById("calculate-btn").addEventListener("click", () => {
        const shoulders = getNumber("shoulders");
        const bust = getNumber("bust");
        const waist = getNumber("waist");
        const hips = getNumber("hips");
        const errorEl = document.getElementById("form-error");

        if (!bust || !waist || !hips) {
          errorEl.classList.remove("hidden");
          return;
        }
        errorEl.classList.add("hidden");

        const result = classifyBodyShape(shoulders, bust, waist, hips);
        if (!result) {
          errorEl.textContent = "Please enter valid measurements.";
          errorEl.classList.remove("hidden");
          return;
        }

        document.getElementById("primary-shape").textContent = result.primary;
        document.getElementById("secondary-shape").textContent =
          result.secondary;

        const r = result.metrics;
        document.getElementById("ratio-waist-bust").textContent = isFinite(
          r.waistBustRatio
        )
          ? round2(r.waistBustRatio)
          : "—";
        document.getElementById("ratio-waist-hips").textContent = isFinite(
          r.waistHipsRatio
        )
          ? round2(r.waistHipsRatio)
          : "—";

        const bustHipsText =
          r.bustHipsDiffPct < 3
            ? "Almost identical"
            : bust > hips
            ? `${round2(r.bustHipsDiffPct)}% bust larger than hips`
            : `${round2(r.bustHipsDiffPct)}% hips larger than bust`;
        document.getElementById("diff-bust-hips").textContent = bustHipsText;

        const shouldersHipsText = !shoulders
          ? "Not provided"
          : Math.abs(r.shouldersHipsDiffPct) < 3
          ? "Almost identical"
          : shoulders > hips
          ? `${round2(r.shouldersHipsDiffPct)}% shoulders wider than hips`
          : `${round2(-r.shouldersHipsDiffPct)}% hips wider than shoulders`;
        document.getElementById("diff-shoulders-hips").textContent =
          shouldersHipsText;

        document.getElementById("summary-text").textContent = result.summary;

        document.getElementById("style-text").textContent = result.styleText;
        const styleListEl = document.getElementById("style-list");
        styleListEl.innerHTML = "";
        result.styleList.forEach((item) => {
          const li = document.createElement("li");
          li.textContent = item;
          styleListEl.appendChild(li);
        });

        let confidence =
          "Result based on fashion‑industry ratios. Treat it as a guide, not a strict label.";
        document.getElementById("confidence-text").textContent = confidence;

        document.getElementById("results-section").classList.remove("hidden");
        document
          .getElementById("results-section")
          .scrollIntoView({ behavior: "smooth", block: "start" });
      });

      document.getElementById("reset-btn").addEventListener("click", () => {
        ["shoulders", "bust", "waist", "hips"].forEach((id) => {
          document.getElementById(id).value = "";
        });
        document.getElementById("results-section").classList.add("hidden");
        document.getElementById("form-error").classList.add("hidden");
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
