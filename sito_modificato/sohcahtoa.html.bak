      // SOHCAHTOA calculator logic
      document.addEventListener("DOMContentLoaded", function () {
        // Mode buttons
        const modeAngleBtn = document.getElementById("mode-angle");
        const modeTriangleBtn = document.getElementById("mode-triangle");
        const anglePanel = document.getElementById("angle-mode-panel");
        const triPanel = document.getElementById("triangle-mode-panel");

        function setMode(mode) {
          if (mode === "angle") {
            modeAngleBtn.classList.add("pill-active");
            modeAngleBtn.classList.remove("pill-inactive");
            modeTriangleBtn.classList.add("pill-inactive");
            modeTriangleBtn.classList.remove("pill-active");
            anglePanel.classList.remove("hidden");
            triPanel.classList.add("hidden");
          } else {
            modeAngleBtn.classList.remove("pill-active");
            modeAngleBtn.classList.add("pill-inactive");
            modeTriangleBtn.classList.remove("pill-inactive");
            modeTriangleBtn.classList.add("pill-active");
            anglePanel.classList.add("hidden");
            triPanel.classList.remove("hidden");
          }
        }

        modeAngleBtn.addEventListener("click", () => setMode("angle"));
        modeTriangleBtn.addEventListener("click", () => setMode("triangle"));

        // ANGLE MODE
        const angleInput = document.getElementById("angle-value");
        const angleUnitSelect = document.getElementById("angle-unit");
        const angleCalcBtn = document.getElementById("angle-calc-btn");
        const angleClearBtn = document.getElementById("angle-clear-btn");
        const angleErrorEl = document.getElementById("angle-error");
        const angleResultsCard = document.getElementById("angle-results-card");
        const angleSummaryEl = document.getElementById("angle-summary");
        const angleTableEl = document.getElementById("angle-table");
        const angleQuadrantEl = document.getElementById("angle-quadrant");

        const quick30 = document.getElementById("quick-30");
        const quick45 = document.getElementById("quick-45");
        const quick60 = document.getElementById("quick-60");
        const quick90 = document.getElementById("quick-90");

        function parseAngle(value, unit) {
          const trimmed = (value || "").trim();
          if (!trimmed) {
            throw new Error("Angle θ is required.");
          }
          // Allow simple expressions like "pi/6" or "π/6" in radians mode
          let num;
          if (unit === "rad" && /pi|π/i.test(trimmed)) {
            const replaced = trimmed
              .toLowerCase()
              .replace(/π/g, "pi")
              .replace(/pi/g, Math.PI.toString());
            try {
              // limited expression evaluation
              // eslint-disable-next-line no-new-func
              num = Function('"use strict";return (' + replaced + ")")();
            } catch {
              throw new Error("Could not parse the radian expression for θ.");
            }
          } else {
            num = Number(trimmed);
          }
          if (!Number.isFinite(num)) {
            throw new Error("Angle θ must be a finite number.");
          }
          if (unit === "deg") {
            return (num * Math.PI) / 180;
          }
          return num;
        }

        function resetAngleResults() {
          angleErrorEl.textContent = "";
          angleErrorEl.classList.add("hidden");
          angleResultsCard.classList.add("hidden");
          angleSummaryEl.textContent = "";
          angleTableEl.textContent = "";
          angleQuadrantEl.textContent = "";
        }

        function computeAngleMode() {
          resetAngleResults();
          try {
            const unit = angleUnitSelect.value;
            const thetaRad = parseAngle(angleInput.value, unit);
            const thetaDeg = (thetaRad * 180) / Math.PI;

            const sinv = Math.sin(thetaRad);
            const cosv = Math.cos(thetaRad);
            const tanv = Math.tan(thetaRad);

            const sinStr = Math.abs(sinv) > 1e8 ? "overflow" : sinv.toFixed(10);
            const cosStr = Math.abs(cosv) > 1e8 ? "overflow" : cosv.toFixed(10);
            let tanStr;
            if (Math.abs(cosv) < 1e-12) {
              tanStr = "undefined (cos θ ≈ 0)";
            } else {
              tanStr = tanv.toFixed(10);
            }

            angleSummaryEl.textContent =
              "θ ≈ " +
              thetaDeg.toFixed(4) +
              "°  (" +
              thetaRad.toFixed(6) +
              " rad)";

            const lines = [];
            lines.push("sin θ = " + sinStr);
            lines.push("cos θ = " + cosStr);
            lines.push("tan θ = " + tanStr);
            angleTableEl.textContent = lines.join("\n");

            // Quadrant note (degrees based)
            let quadrantText = "";
            const degNorm = ((thetaDeg % 360) + 360) % 360;
            let quadrant;
            if (
              degNorm === 0 ||
              degNorm === 180 ||
              degNorm === 90 ||
              degNorm === 270
            ) {
              quadrant = "axis";
            } else if (degNorm > 0 && degNorm < 90) {
              quadrant = "I";
            } else if (degNorm > 90 && degNorm < 180) {
              quadrant = "II";
            } else if (degNorm > 180 && degNorm < 270) {
              quadrant = "III";
            } else {
              quadrant = "IV";
            }

            if (quadrant === "axis") {
              quadrantText =
                "θ lies on an axis, so at least one of sin θ or cos θ is 0 and tan θ may be undefined.";
            } else {
              quadrantText =
                "Quadrant " +
                quadrant +
                " sign pattern: " +
                (quadrant === "I"
                  ? "sin > 0, cos > 0, tan > 0"
                  : quadrant === "II"
                  ? "sin > 0, cos < 0, tan < 0"
                  : quadrant === "III"
                  ? "sin < 0, cos < 0, tan > 0"
                  : "sin < 0, cos > 0, tan < 0") +
                ".";
            }
            angleQuadrantEl.textContent = quadrantText;

            angleResultsCard.classList.remove("hidden");
          } catch (e) {
            angleErrorEl.textContent =
              e.message || "An error occurred while computing trig ratios.";
            angleErrorEl.classList.remove("hidden");
          }
        }

        function clearAngleMode() {
          angleInput.value = "";
          angleUnitSelect.value = "deg";
          resetAngleResults();
        }

        angleCalcBtn.addEventListener("click", computeAngleMode);
        angleClearBtn.addEventListener("click", clearAngleMode);

        [angleInput].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter" && (e.ctrlKey || e.metaKey)) {
              e.preventDefault();
              computeAngleMode();
            }
          });
        });

        quick30.addEventListener("click", () => {
          angleUnitSelect.value = "deg";
          angleInput.value = "30";
          computeAngleMode();
        });
        quick45.addEventListener("click", () => {
          angleUnitSelect.value = "deg";
          angleInput.value = "45";
          computeAngleMode();
        });
        quick60.addEventListener("click", () => {
          angleUnitSelect.value = "deg";
          angleInput.value = "60";
          computeAngleMode();
        });
        quick90.addEventListener("click", () => {
          angleUnitSelect.value = "deg";
          angleInput.value = "90";
          computeAngleMode();
        });

        // TRIANGLE MODE
        const triAngleInput = document.getElementById("tri-angle-value");
        const triAngleUnitSelect = document.getElementById("tri-angle-unit");
        const triUnitInput = document.getElementById("tri-unit");
        const triKnownValueInput = document.getElementById("tri-known-value");
        const triCalcBtn = document.getElementById("tri-calc-btn");
        const triClearBtn = document.getElementById("tri-clear-btn");
        const triExampleBtn = document.getElementById("tri-example-3-4-5-btn");
        const triErrorEl = document.getElementById("tri-error");
        const triResultsCard = document.getElementById("tri-results-card");
        const triSidesEl = document.getElementById("tri-sides");
        const triTrigEl = document.getElementById("tri-trig");
        const triSummaryEl = document.getElementById("tri-summary");

        function getTriKnownType() {
          const radios = document.querySelectorAll(
            'input[name="tri-known-type"]'
          );
          for (const r of radios) {
            if (r.checked) return r.value;
          }
          return "hyp";
        }

        function parsePositiveNumber(value, label) {
          const trimmed = (value || "").trim();
          if (!trimmed) {
            throw new Error(label + " is required.");
          }
          const num = Number(trimmed);
          if (!Number.isFinite(num) || num <= 0) {
            throw new Error(label + " must be a positive number.");
          }
          return num;
        }

        function parseTriangleAngle() {
          const unit = triAngleUnitSelect.value;
          const val = parseAngle(triAngleInput.value, unit);
          const deg = (val * 180) / Math.PI;
          if (!(deg > 0 && deg < 90)) {
            throw new Error(
              "The acute angle θ must be between 0° and 90° for a right triangle."
            );
          }
          return { rad: val, deg };
        }

        function resetTriResults() {
          triErrorEl.textContent = "";
          triErrorEl.classList.add("hidden");
          triResultsCard.classList.add("hidden");
          triSidesEl.textContent = "";
          triTrigEl.textContent = "";
          triSummaryEl.textContent = "";
        }

        function computeTriangleMode() {
          resetTriResults();
          try {
            const { rad: thetaRad, deg: thetaDeg } = parseTriangleAngle();
            const knownType = getTriKnownType();
            const knownValue = parsePositiveNumber(
              triKnownValueInput.value,
              "Known side length"
            );
            const unitLabel = (triUnitInput.value || "").trim();

            const sinv = Math.sin(thetaRad);
            const cosv = Math.cos(thetaRad);
            const tanv = Math.tan(thetaRad);

            if (Math.abs(sinv) < 1e-12 || Math.abs(cosv) < 1e-12) {
              throw new Error(
                "Angle too close to 0° or 90°; trig ratios become unstable."
              );
            }

            let opp, adj, hyp;
            if (knownType === "hyp") {
              hyp = knownValue;
              opp = hyp * sinv;
              adj = hyp * cosv;
            } else if (knownType === "opp") {
              opp = knownValue;
              hyp = opp / sinv;
              adj = opp / tanv;
            } else {
              adj = knownValue;
              hyp = adj / cosv;
              opp = adj * tanv;
            }

            if (!(hyp > 0 && opp > 0 && adj > 0)) {
              throw new Error(
                "Computed side lengths are not positive. Check angle and side values."
              );
            }

            const sidesLines = [];
            const u = unitLabel ? " " + unitLabel : "";
            sidesLines.push("Opposite ≈ " + opp.toFixed(6) + u);
            sidesLines.push("Adjacent ≈ " + adj.toFixed(6) + u);
            sidesLines.push("Hypotenuse ≈ " + hyp.toFixed(6) + u);
            triSidesEl.textContent = sidesLines.join("\n");

            const triLines = [];
            triLines.push(
              "θ ≈ " +
                thetaDeg.toFixed(4) +
                "°  (" +
                thetaRad.toFixed(6) +
                " rad)"
            );
            triLines.push(
              "sin θ = opposite / hypotenuse ≈ " + sinv.toFixed(10)
            );
            triLines.push(
              "cos θ = adjacent / hypotenuse ≈ " + cosv.toFixed(10)
            );
            triLines.push("tan θ = opposite / adjacent ≈ " + tanv.toFixed(10));
            triTrigEl.textContent = triLines.join("\n");

            triSummaryEl.textContent =
              "Using SOHCAHTOA: SOH (sin = opp/hyp), CAH (cos = adj/hyp), and TOA (tan = opp/adj), " +
              "the calculator used the chosen known side to derive the other two sides and evaluate all three primary trig ratios.";

            triResultsCard.classList.remove("hidden");
          } catch (e) {
            triErrorEl.textContent =
              e.message ||
              "An error occurred while solving the right triangle.";
            triErrorEl.classList.remove("hidden");
          }
        }

        function clearTriangleMode() {
          triAngleInput.value = "";
          triAngleUnitSelect.value = "deg";
          triUnitInput.value = "";
          triKnownValueInput.value = "";
          const radios = document.querySelectorAll(
            'input[name="tri-known-type"]'
          );
          radios.forEach((r) => {
            r.checked = r.value === "hyp";
          });
          resetTriResults();
        }

        function loadExample345() {
          // Standard 3–4–5 triangle: θ ≈ 36.87° with opposite 3 and adjacent 4
          setMode("triangle");
          triAngleUnitSelect.value = "deg";
          triAngleInput.value = "36.87";
          triUnitInput.value = "";
          const radios = document.querySelectorAll(
            'input[name="tri-known-type"]'
          );
          radios.forEach((r) => {
            r.checked = r.value === "hyp";
          });
          triKnownValueInput.value = "5";
          computeTriangleMode();
        }

        triCalcBtn.addEventListener("click", computeTriangleMode);
        triClearBtn.addEventListener("click", clearTriangleMode);
        triExampleBtn.addEventListener("click", loadExample345);

        [triAngleInput, triKnownValueInput].forEach(function (el) {
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter" && (e.ctrlKey || e.metaKey)) {
              e.preventDefault();
              computeTriangleMode();
            }
          });
        });

        // Default mode
        setMode("angle");
      });
    </script>
  
