    <script>
      // Utility functions
      function fmtMoney(value) {
        if (!isFinite(value)) return "$0";
        return (
          "$" + value.toLocaleString(undefined, { maximumFractionDigits: 0 })
        );
      }
      function fmtMoney2(value) {
        if (!isFinite(value)) return "$0.00";
        return (
          "$" +
          value.toLocaleString(undefined, {
            minimumFractionDigits: 2,
            maximumFractionDigits: 2,
          })
        );
      }
      function monthsToYrsMos(months) {
        if (!isFinite(months) || months <= 0) return "0 months";
        const yrs = Math.floor(months / 12);
        const mos = Math.round(months % 12);
        const parts = [];
        if (yrs > 0) parts.push(yrs + " yr" + (yrs > 1 ? "s" : ""));
        if (mos > 0) parts.push(mos + " mo" + (mos > 1 ? "s" : ""));
        return parts.join(" ");
      }

      document.addEventListener("DOMContentLoaded", function () {
        const homePriceEl = document.getElementById("homePrice");
        const downAmtEl = document.getElementById("downPaymentAmount");
        const downPctEl = document.getElementById("downPaymentPercent");
        const termEl = document.getElementById("loanTerm");
        const termLabel = document.getElementById("loanTermLabel");
        const rateEl = document.getElementById("interestRate");
        const rateLabel = document.getElementById("interestRateLabel");
        const taxRateEl = document.getElementById("propertyTaxRate");
        const taxRateLabel = document.getElementById("propertyTaxRateLabel");
        const insYearEl = document.getElementById("insurancePerYear");
        const pmiRateEl = document.getElementById("pmiRate");
        const pmiRateLabel = document.getElementById("pmiRateLabel");
        const pmiEnabledEl = document.getElementById("pmiEnabled");
        const hoaEl = document.getElementById("hoaPerMonth");
        const extraMonthlyEl = document.getElementById("extraMonthly");
        const extraAnnualEl = document.getElementById("extraAnnual");
        const extraOneTimeEl = document.getElementById("extraOneTime");
        const resetBtn = document.getElementById("resetBtn");
        const termPresets = document.querySelectorAll(".term-preset");

        const totalMonthlyDisplay = document.getElementById(
          "totalMonthlyDisplay"
        );
        const piMonthlyDisplay = document.getElementById("piMonthlyDisplay");
        const taxMonthlyDisplay = document.getElementById("taxMonthlyDisplay");
        const insMonthlyDisplay = document.getElementById("insMonthlyDisplay");
        const pmiMonthlyDisplay = document.getElementById("pmiMonthlyDisplay");
        const hoaMonthlyDisplay = document.getElementById("hoaMonthlyDisplay");
        const extraMonthlyDisplay = document.getElementById(
          "extraMonthlyDisplay"
        );
        const loanAmountDisplay = document.getElementById("loanAmountDisplay");
        const totalInterestDisplay = document.getElementById(
          "totalInterestDisplay"
        );
        const totalPaidDisplay = document.getElementById("totalPaidDisplay");
        const payoffDateDisplay = document.getElementById("payoffDateDisplay");
        const originalPayoffDisplay = document.getElementById(
          "originalPayoffDisplay"
        );
        const timeSavedDisplay = document.getElementById("timeSavedDisplay");
        const interestSavedDisplay = document.getElementById(
          "interestSavedDisplay"
        );
        const amortBody = document.getElementById("amortizationBody");

        function syncDownFromAmount() {
          const price = parseFloat(homePriceEl.value) || 0;
          const downAmt = Math.min(parseFloat(downAmtEl.value) || 0, price);
          if (price > 0) {
            const pct = (downAmt / price) * 100;
            downPctEl.value = pct.toFixed(1);
          } else {
            downPctEl.value = "0";
          }
        }

        function syncDownFromPercent() {
          const price = parseFloat(homePriceEl.value) || 0;
          let pct = parseFloat(downPctEl.value) || 0;
          if (pct < 0) pct = 0;
          if (pct > 100) pct = 100;
          downPctEl.value = pct;
          const amt = (price * pct) / 100;
          downAmtEl.value = Math.round(amt);
        }

        function updateLabels() {
          termLabel.textContent = termEl.value;
          rateLabel.textContent = parseFloat(rateEl.value).toFixed(2) + "%";
          taxRateLabel.textContent =
            parseFloat(taxRateEl.value).toFixed(2) + "%";
          pmiRateLabel.textContent =
            parseFloat(pmiRateEl.value).toFixed(2) + "%";
        }

        function buildSchedule({
          principal,
          annualRate,
          years,
          extraMonthly,
          extraAnnual,
          extraOneTime,
        }) {
          const r = annualRate / 100 / 12;
          const n = years * 12;
          if (principal <= 0 || r <= 0 || n <= 0)
            return { schedule: [], totalInterest: 0, months: 0 };

          const basePayment =
            (principal * (r * Math.pow(1 + r, n))) / (Math.pow(1 + r, n) - 1);
          const schedule = [];
          let balance = principal;
          let totalInterest = 0;
          let month = 0;
          const startDate = new Date();
          let extraOneTimeRemaining = extraOneTime || 0;

          while (balance > 0 && month < n + 600) {
            // safety cap
            month++;
            const interest = balance * r;
            let principalPay = basePayment - interest;
            if (principalPay < 0) principalPay = 0;

            let extra = extraMonthly + (month % 12 === 1 ? extraAnnual : 0);
            if (extraOneTimeRemaining > 0) {
              extra += extraOneTimeRemaining;
              extraOneTimeRemaining = 0;
            }

            let totalPayment = principalPay + interest + extra;
            if (totalPayment > balance + interest) {
              totalPayment = balance + interest;
              extra = Math.max(0, totalPayment - basePayment);
              principalPay = totalPayment - interest;
            }

            balance -= principalPay + extra;
            if (balance < 0.01) balance = 0;

            totalInterest += interest;

            const payDate = new Date(startDate);
            payDate.setMonth(payDate.getMonth() + month - 1);
            const dateStr = payDate.toLocaleDateString(undefined, {
              year: "numeric",
              month: "short",
            });

            schedule.push({
              month,
              dateStr,
              payment: totalPayment,
              principal: principalPay,
              interest,
              extra,
              balance,
            });

            if (balance <= 0) break;
          }

          return {
            schedule,
            totalInterest,
            months: schedule.length,
            basePayment,
          };
        }

        function calculate() {
          updateLabels();
          const price = parseFloat(homePriceEl.value) || 0;
          const downAmt = Math.min(parseFloat(downAmtEl.value) || 0, price);
          const loanAmount = Math.max(price - downAmt, 0);
          const years = parseInt(termEl.value, 10) || 0;
          const rate = parseFloat(rateEl.value) || 0;
          const taxRate = parseFloat(taxRateEl.value) || 0;
          const insYear = parseFloat(insYearEl.value) || 0;
          const pmiRate = parseFloat(pmiRateEl.value) || 0;
          const hoa = parseFloat(hoaEl.value) || 0;
          const extraMonthly = parseFloat(extraMonthlyEl.value) || 0;
          const extraAnnual = parseFloat(extraAnnualEl.value) || 0;
          const extraOneTime = parseFloat(extraOneTimeEl.value) || 0;

          if (loanAmount <= 0 || years <= 0 || rate <= 0) {
            totalMonthlyDisplay.textContent = "$0";
            piMonthlyDisplay.textContent = "$0";
            taxMonthlyDisplay.textContent = "$0";
            insMonthlyDisplay.textContent = "$0";
            pmiMonthlyDisplay.textContent = "$0";
            hoaMonthlyDisplay.textContent = "$0";
            extraMonthlyDisplay.textContent = "$0";
            loanAmountDisplay.textContent = "$0";
            totalInterestDisplay.textContent = "$0";
            totalPaidDisplay.textContent = "$0";
            payoffDateDisplay.textContent = "";
            originalPayoffDisplay.textContent = "–";
            timeSavedDisplay.textContent = "–";
            interestSavedDisplay.textContent = "–";
            amortBody.innerHTML = "";
            return;
          }

          // Base schedule (no extras) for comparison
          const base = buildSchedule({
            principal: loanAmount,
            annualRate: rate,
            years,
            extraMonthly: 0,
            extraAnnual: 0,
            extraOneTime: 0,
          });

          // Schedule with extras
          const withExtras = buildSchedule({
            principal: loanAmount,
            annualRate: rate,
            years,
            extraMonthly,
            extraAnnual,
            extraOneTime,
          });

          const basePayment = base.basePayment || 0;
          const piMonthly = basePayment;
          const taxMonthly = (price * (taxRate / 100)) / 12;
          const insMonthly = insYear / 12;

          let pmiMonthly = 0;
          const downPct = price > 0 ? (downAmt / price) * 100 : 0;
          if (pmiEnabledEl.checked && downPct < 20 && pmiRate > 0) {
            pmiMonthly = (loanAmount * (pmiRate / 100)) / 12;
          }

          const totalMonthly =
            piMonthly +
            taxMonthly +
            insMonthly +
            pmiMonthly +
            hoa +
            extraMonthly +
            extraAnnual / 12;

          totalMonthlyDisplay.textContent = fmtMoney2(totalMonthly);
          piMonthlyDisplay.textContent = fmtMoney2(piMonthly);
          taxMonthlyDisplay.textContent = fmtMoney2(taxMonthly);
          insMonthlyDisplay.textContent = fmtMoney2(insMonthly);
          pmiMonthlyDisplay.textContent = fmtMoney2(pmiMonthly);
          hoaMonthlyDisplay.textContent = fmtMoney2(hoa);
          extraMonthlyDisplay.textContent = fmtMoney2(
            extraMonthly + extraAnnual / 12
          );

          loanAmountDisplay.textContent = fmtMoney(loanAmount);
          totalInterestDisplay.textContent = fmtMoney(
            Math.round(withExtras.totalInterest)
          );
          totalPaidDisplay.textContent = fmtMoney(
            Math.round(loanAmount + withExtras.totalInterest)
          );

          if (withExtras.schedule.length > 0) {
            const last = withExtras.schedule[withExtras.schedule.length - 1];
            payoffDateDisplay.textContent =
              "Estimated payoff: " +
              last.dateStr +
              " (" +
              monthsToYrsMos(withExtras.months) +
              ")";
          } else {
            payoffDateDisplay.textContent = "";
          }

          originalPayoffDisplay.textContent = monthsToYrsMos(base.months);
          const timeSavedMonths = base.months - withExtras.months;
          timeSavedDisplay.textContent =
            timeSavedMonths > 0 ? monthsToYrsMos(timeSavedMonths) : "0 months";
          const interestSaved = base.totalInterest - withExtras.totalInterest;
          interestSavedDisplay.textContent =
            interestSaved > 0 ? fmtMoney(Math.round(interestSaved)) : "$0";

          // Build amortization table (limit to first 360 rows for performance)
          amortBody.innerHTML = "";
          const maxRows = 360;
          withExtras.schedule.forEach((row, idx) => {
            if (idx >= maxRows) return;
            const tr = document.createElement("tr");
            tr.className = idx % 2 === 0 ? "bg-white" : "bg-gray-50";
            tr.innerHTML = `
          <td class="px-3 py-1 whitespace-nowrap text-gray-700">${
            row.month
          }</td>
          <td class="px-3 py-1 whitespace-nowrap text-gray-700">${
            row.dateStr
          }</td>
          <td class="px-3 py-1 whitespace-nowrap text-right text-gray-700">${fmtMoney2(
            row.payment
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right text-green-700">${fmtMoney2(
            row.principal
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right text-red-700">${fmtMoney2(
            row.interest
          )}</td>
          <td class="px-3 py-1 whitespace-nowrap text-right text-blue-700">${
            row.extra > 0 ? fmtMoney2(row.extra) : "$0.00"
          }</td>
          <td class="px-3 py-1 whitespace-nowrap text-right text-gray-700">${fmtMoney2(
            row.balance
          )}</td>
        `;
            amortBody.appendChild(tr);
          });
          if (withExtras.schedule.length > maxRows) {
            const tr = document.createElement("tr");
            tr.innerHTML = `<td colspan="7" class="px-3 py-2 text-center text-xs text-gray-500">Showing first ${maxRows} payments of ${withExtras.schedule.length}. Scroll for more or adjust term.</td>`;
            amortBody.appendChild(tr);
          }
        }

        // Event listeners
        homePriceEl.addEventListener("input", () => {
          syncDownFromPercent();
          calculate();
        });
        downAmtEl.addEventListener("input", () => {
          syncDownFromAmount();
          calculate();
        });
        downPctEl.addEventListener("input", () => {
          syncDownFromPercent();
          calculate();
        });

        [
          termEl,
          rateEl,
          taxRateEl,
          insYearEl,
          pmiRateEl,
          pmiEnabledEl,
          hoaEl,
          extraMonthlyEl,
          extraAnnualEl,
          extraOneTimeEl,
        ].forEach((el) => {
          el.addEventListener("input", calculate);
          el.addEventListener("change", calculate);
        });

        termPresets.forEach((btn) => {
          btn.addEventListener("click", () => {
            const t = parseInt(btn.getAttribute("data-term"), 10);
            termEl.value = t;
            calculate();
          });
        });

        resetBtn.addEventListener("click", () => {
          homePriceEl.value = 400000;
          downAmtEl.value = 80000;
          syncDownFromAmount();
          termEl.value = 30;
          rateEl.value = 6.5;
          taxRateEl.value = 1.2;
          insYearEl.value = 1500;
          pmiRateEl.value = 0.8;
          pmiEnabledEl.checked = true;
          hoaEl.value = 0;
          extraMonthlyEl.value = 0;
          extraAnnualEl.value = 0;
          extraOneTimeEl.value = 0;
          calculate();
        });

        // Initial sync and calculation
        syncDownFromAmount();
        calculate();
      });
    </script>

