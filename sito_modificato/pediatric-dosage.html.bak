    <script>
      // Pediatric dosage calculator logic
      (function () {
        const weightEl = document.getElementById("weight");
        const weightUnitEl = document.getElementById("weight-unit");
        const doseModeEls = document.querySelectorAll(".dose-mode");
        const mgkgRow = document.getElementById("mgkg-row");
        const totalmgRow = document.getElementById("totalmg-row");
        const doseMgkgEl = document.getElementById("dose-mgkg");
        const doseTotalEl = document.getElementById("dose-totalmg");
        const strengthMgEl = document.getElementById("strength-mg");
        const strengthVolEl = document.getElementById("strength-vol");
        const freqEl = document.getElementById("frequency");
        const maxDailyEl = document.getElementById("max-daily");
        const calcBtn = document.getElementById("calc-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errEl = document.getElementById("error-msg");

        const resWeight = document.getElementById("res-weight");
        const resBasis = document.getElementById("res-basis");
        const resTotalMg = document.getElementById("res-totalmg");
        const resVol = document.getElementById("res-vol");
        const resDailyMg = document.getElementById("res-dailymg");
        const resDailyVol = document.getElementById("res-dailyvol");
        const resMaxWrap = document.getElementById("res-max-warning");
        const resMaxText = document.getElementById("res-max-text");

        function getDoseMode() {
          for (const r of doseModeEls) {
            if (r.checked) return r.value;
          }
          return "mgkg";
        }

        function switchDoseMode() {
          const mode = getDoseMode();
          if (mode === "mgkg") {
            mgkgRow.classList.remove("hidden");
            totalmgRow.classList.add("hidden");
          } else {
            mgkgRow.classList.add("hidden");
            totalmgRow.classList.remove("hidden");
          }
          errEl.classList.add("hidden");
        }

        doseModeEls.forEach((r) =>
          r.addEventListener("change", switchDoseMode)
        );

        function round(value, decimals) {
          const factor = Math.pow(10, decimals);
          return Math.round(value * factor) / factor;
        }

        function calculate() {
          errEl.classList.add("hidden");
          resMaxWrap.classList.add("hidden");
          resMaxText.textContent = "";

          const weight = parseFloat(weightEl.value);
          if (!weight || weight <= 0) {
            errEl.textContent =
              "Please enter a valid child weight greater than 0.";
            errEl.classList.remove("hidden");
            return;
          }

          let weightKg;
          if (weightUnitEl.value === "kg") {
            weightKg = weight;
          } else {
            weightKg = weight / 2.20462;
          }

          const mode = getDoseMode();
          let totalMg;

          if (mode === "mgkg") {
            const mgkg = parseFloat(doseMgkgEl.value);
            if (!mgkg || mgkg <= 0) {
              errEl.textContent =
                "Please enter a valid mg/kg dose greater than 0.";
              errEl.classList.remove("hidden");
              return;
            }
            totalMg = weightKg * mgkg;
            resBasis.textContent = `${round(mgkg, 2)} mg/kg per dose`;
          } else {
            const total = parseFloat(doseTotalEl.value);
            if (!total || total <= 0) {
              errEl.textContent =
                "Please enter a valid total dose in mg greater than 0.";
              errEl.classList.remove("hidden");
              return;
            }
            totalMg = total;
            resBasis.textContent = `${round(total, 2)} mg per dose (fixed)`;
          }

          // Strength and volume
          const strengthMg = parseFloat(strengthMgEl.value);
          const strengthVol = parseFloat(strengthVolEl.value);
          let volPerDose = null;
          if (strengthMg > 0 && strengthVol > 0) {
            const conc = strengthMg / strengthVol; // mg/mL
            if (conc > 0) {
              volPerDose = totalMg / conc;
            }
          }

          // Frequency and daily totals
          const freq = parseFloat(freqEl.value);
          let dailyMg = null;
          let dailyVol = null;
          if (freq && freq > 0) {
            dailyMg = totalMg * freq;
            if (volPerDose != null) {
              dailyVol = volPerDose * freq;
            }
          }

          // Max daily dose check
          const maxDaily = parseFloat(maxDailyEl.value);
          if (maxDaily && maxDaily > 0 && dailyMg != null) {
            if (dailyMg > maxDaily) {
              resMaxWrap.classList.remove("hidden");
              resMaxText.textContent = `Warning: The calculated total daily dose (${round(
                dailyMg,
                2
              )} mg/day) exceeds the entered maximum daily dose (${round(
                maxDaily,
                2
              )} mg/day). Please review and adjust according to your reference.`;
            } else {
              resMaxWrap.classList.remove("hidden");
              resMaxText.textContent = `The calculated total daily dose (${round(
                dailyMg,
                2
              )} mg/day) is within the entered maximum daily dose (${round(
                maxDaily,
                2
              )} mg/day). Always confirm with a pediatric reference.`;
            }
          }

          // Populate results
          resWeight.textContent = `${round(weightKg, 2)} kg`;
          resTotalMg.textContent = round(totalMg, 2).toString();
          resVol.textContent =
            volPerDose != null ? round(volPerDose, 2).toString() : "–";
          resDailyMg.textContent =
            dailyMg != null ? round(dailyMg, 2).toString() : "–";
          resDailyVol.textContent =
            dailyVol != null ? round(dailyVol, 2).toString() : "–";
        }

        function resetAll() {
          weightEl.value = "";
          weightUnitEl.value = "kg";
          doseMgkgEl.value = "";
          doseTotalEl.value = "";
          strengthMgEl.value = "";
          strengthVolEl.value = "";
          freqEl.value = "";
          maxDailyEl.value = "";
          resWeight.textContent = "–";
          resBasis.textContent = "–";
          resTotalMg.textContent = "–";
          resVol.textContent = "–";
          resDailyMg.textContent = "–";
          resDailyVol.textContent = "–";
          resMaxWrap.classList.add("hidden");
          resMaxText.textContent = "";
          errEl.classList.add("hidden");
          doseModeEls.forEach((r) => {
            if (r.value === "mgkg") r.checked = true;
          });
          switchDoseMode();
        }

        calcBtn.addEventListener("click", function (e) {
          e.preventDefault();
          calculate();
        });

        resetBtn.addEventListener("click", function (e) {
          e.preventDefault();
          resetAll();
        });
      })();
    </script>

