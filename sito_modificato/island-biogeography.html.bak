    <script>
      (function () {
        const PInput = document.getElementById("mainlandSpecies");
        const areaInput = document.getElementById("islandArea");
        const distanceInput = document.getElementById("distance");
        const cInput = document.getElementById("cCoeff");
        const zInput = document.getElementById("zCoeff");
        const imaxSlider = document.getElementById("imaxSlider");
        const emaxSlider = document.getElementById("emaxSlider");
        const distanceEffectSlider = document.getElementById(
          "distanceEffectSlider"
        );

        const imaxValue = document.getElementById("imaxValue");
        const emaxValue = document.getElementById("emaxValue");
        const distanceEffectValue = document.getElementById(
          "distanceEffectValue"
        );

        const eqSpeciesEl = document.getElementById("eqSpecies");
        const turnoverEl = document.getElementById("turnoverRate");
        const speciesAreaEl = document.getElementById("speciesAreaPrediction");
        const runBtn = document.getElementById("runModelBtn");
        const compareBtn = document.getElementById("compareScenariosBtn");
        const scenarioSummary = document.getElementById("scenarioSummary");

        let chart;

        function formatNumber(x, digits = 1) {
          if (!isFinite(x)) return "–";
          return Number(x).toFixed(digits);
        }

        function computeModel(params) {
          const { P, A, D, c, z, Imax, Emax, k } = params;

          const ImaxEff = Imax * Math.exp(-k * D);
          const S_eq = ImaxEff <= 0 ? 0 : (ImaxEff / (ImaxEff + Emax)) * P;
          const turnover = ImaxEff * (1 - S_eq / P);
          const S_area = c * Math.pow(A, z);

          const n = 50;
          const S_values = [];
          const I_values = [];
          const E_values = [];
          for (let i = 0; i <= n; i++) {
            const S = (P * i) / n;
            const I = ImaxEff * (1 - S / P);
            const E = Emax * (S / P);
            S_values.push(S);
            I_values.push(I);
            E_values.push(E);
          }

          return {
            S_eq,
            turnover,
            S_area,
            ImaxEff,
            S_values,
            I_values,
            E_values,
          };
        }

        function updateOutputs() {
          const P = Math.max(1, Number(PInput.value) || 0);
          const A = Math.max(0.0001, Number(areaInput.value) || 0.0001);
          const D = Math.max(0, Number(distanceInput.value) || 0);
          const c = Math.max(0.0001, Number(cInput.value) || 0.0001);
          const z = Math.max(0.01, Number(zInput.value) || 0.01);
          const Imax = Number(imaxSlider.value);
          const Emax = Number(emaxSlider.value);
          const k = Number(distanceEffectSlider.value) / 100; // scale down for realism

          const result = computeModel({ P, A, D, c, z, Imax, Emax, k });

          eqSpeciesEl.textContent = formatNumber(result.S_eq, 1);
          turnoverEl.textContent = formatNumber(result.turnover, 3);
          speciesAreaEl.textContent = formatNumber(result.S_area, 1);

          // Update chart
          const labels = result.S_values.map((v) => v.toFixed(0));
          const dataImm = result.I_values;
          const dataExt = result.E_values;

          if (!chart) {
            const ctx = document.getElementById("curvesChart").getContext("2d");
            chart = new Chart(ctx, {
              type: "line",
              data: {
                labels,
                datasets: [
                  {
                    label: "Immigration rate",
                    data: dataImm,
                    borderColor: "#2563eb",
                    backgroundColor: "rgba(37, 99, 235, 0.1)",
                    tension: 0.2,
                    pointRadius: 0,
                  },
                  {
                    label: "Extinction rate",
                    data: dataExt,
                    borderColor: "#dc2626",
                    backgroundColor: "rgba(220, 38, 38, 0.1)",
                    tension: 0.2,
                    pointRadius: 0,
                  },
                ],
              },
              options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                  legend: { display: true, position: "bottom" },
                  tooltip: {
                    callbacks: {
                      title: (items) => `Species S = ${items[0].label}`,
                      label: (ctx) =>
                        `${ctx.dataset.label}: ${ctx.parsed.y.toFixed(3)}`,
                    },
                  },
                },
                scales: {
                  x: {
                    title: {
                      display: true,
                      text: "Number of species on island (S)",
                    },
                    ticks: { maxTicksLimit: 6 },
                  },
                  y: {
                    title: { display: true, text: "Rate (per unit time)" },
                    ticks: { maxTicksLimit: 6 },
                  },
                },
              },
            });
          } else {
            chart.data.labels = labels;
            chart.data.datasets[0].data = dataImm;
            chart.data.datasets[1].data = dataExt;
            chart.update();
          }
        }

        function updateSliderLabels() {
          imaxValue.textContent = Number(imaxSlider.value).toFixed(2);
          emaxValue.textContent = Number(emaxSlider.value).toFixed(2);
          distanceEffectValue.textContent = Number(
            distanceEffectSlider.value
          ).toFixed(2);
        }

        function loadScenarioComparison() {
          // Scenario A: near, large island
          const scenarioA = computeModel({
            P: 200,
            A: 500,
            D: 10,
            c: 10,
            z: 0.25,
            Imax: 0.8,
            Emax: 0.4,
            k: 0.5 / 100,
          });

          // Scenario B: far, small island
          const scenarioB = computeModel({
            P: 200,
            A: 10,
            D: 500,
            c: 10,
            z: 0.25,
            Imax: 0.8,
            Emax: 0.8,
            k: 0.5 / 100,
          });

          scenarioSummary.innerHTML = `
      <li><strong>Scenario A (near, large):</strong> S* ≈ ${formatNumber(
        scenarioA.S_eq,
        1
      )}, turnover ≈ ${formatNumber(scenarioA.turnover, 3)}</li>
      <li><strong>Scenario B (far, small):</strong> S* ≈ ${formatNumber(
        scenarioB.S_eq,
        1
      )}, turnover ≈ ${formatNumber(scenarioB.turnover, 3)}</li>
      <li>As expected, the near, large island supports more species and has higher turnover.</li>
    `;
        }

        imaxSlider.addEventListener("input", () => {
          updateSliderLabels();
        });
        emaxSlider.addEventListener("input", () => {
          updateSliderLabels();
        });
        distanceEffectSlider.addEventListener("input", () => {
          updateSliderLabels();
        });

        runBtn.addEventListener("click", updateOutputs);
        compareBtn.addEventListener("click", loadScenarioComparison);

        // Initialize
        updateSliderLabels();
        updateOutputs();
      })();
    </script>
  
