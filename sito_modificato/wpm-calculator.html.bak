    <script>
      // Utility functions
      function countWords(text) {
        if (!text) return 0;
        const cleaned = text.trim().replace(/\s+/g, " ");
        if (!cleaned) return 0;
        return cleaned.split(" ").length;
      }

      function countChars(text) {
        if (!text) return 0;
        return text.length;
      }

      function formatTime(seconds) {
        if (!isFinite(seconds) || seconds < 0) return "0.0 s";
        if (seconds < 60) return seconds.toFixed(1) + " s";
        const m = Math.floor(seconds / 60);
        const s = seconds % 60;
        return m + " min " + s.toFixed(0) + " s";
      }

      // Tabs
      const tabLive = document.getElementById("tab-live");
      const tabManual = document.getElementById("tab-manual");
      const tabEstimator = document.getElementById("tab-estimator");
      const panelLive = document.getElementById("panel-live");
      const panelManual = document.getElementById("panel-manual");
      const panelEstimator = document.getElementById("panel-estimator");

      function activateTab(tab) {
        const tabs = [tabLive, tabManual, tabEstimator];
        const panels = [panelLive, panelManual, panelEstimator];
        tabs.forEach((t, i) => {
          const isActive = t === tab;
          t.classList.toggle("border-blue-600", isActive);
          t.classList.toggle("text-blue-600", isActive);
          t.classList.toggle("border-transparent", !isActive);
          t.classList.toggle("text-gray-600", !isActive);
          panels[i].classList.toggle("hidden", !isActive);
        });
      }

      tabLive.addEventListener("click", () => activateTab(tabLive));
      tabManual.addEventListener("click", () => activateTab(tabManual));
      tabEstimator.addEventListener("click", () => activateTab(tabEstimator));

      // Live typing logic
      let liveTimer = null;
      let liveStartTime = null;
      let liveRunning = false;

      const typingBox = document.getElementById("typing-box");
      const liveTimeEl = document.getElementById("live-time");
      const liveWordsEl = document.getElementById("live-words");
      const liveGrossWpmEl = document.getElementById("live-gross-wpm");
      const liveCpmEl = document.getElementById("live-cpm");
      const btnStartLive = document.getElementById("btn-start-live");
      const btnStopLive = document.getElementById("btn-stop-live");

      function resetLive() {
        if (liveTimer) clearInterval(liveTimer);
        liveTimer = null;
        liveStartTime = null;
        liveRunning = false;
        liveTimeEl.textContent = "0.0 s";
        liveWordsEl.textContent = "0";
        liveGrossWpmEl.textContent = "0";
        liveCpmEl.textContent = "0";
      }

      function updateLiveStats() {
        const now = performance.now();
        const elapsedSec = liveStartTime ? (now - liveStartTime) / 1000 : 0;
        const text = typingBox.value;
        const words = countWords(text);
        const chars = countChars(text);
        const minutes = elapsedSec / 60 || 1e-9; // avoid divide by zero

        const grossWpm = words / minutes;
        const cpm = chars / minutes;

        liveTimeEl.textContent = formatTime(elapsedSec);
        liveWordsEl.textContent = words.toString();
        liveGrossWpmEl.textContent = isFinite(grossWpm)
          ? grossWpm.toFixed(1)
          : "0";
        liveCpmEl.textContent = isFinite(cpm) ? cpm.toFixed(0) : "0";
      }

      typingBox.addEventListener("input", () => {
        if (!liveRunning && typingBox.value.trim().length > 0) {
          // start timer on first keystroke
          liveRunning = true;
          liveStartTime = performance.now();
          liveTimer = setInterval(updateLiveStats, 100);
        } else if (liveRunning) {
          updateLiveStats();
        }
      });

      btnStartLive.addEventListener("click", () => {
        resetLive();
        typingBox.value = "";
        typingBox.focus();
      });

      btnStopLive.addEventListener("click", () => {
        if (liveTimer) {
          clearInterval(liveTimer);
          liveTimer = null;
        }
        if (liveRunning) {
          updateLiveStats();
        }
        liveRunning = false;
      });

      // Sample text handling
      const sampleTextArea = document.getElementById("sample-text");
      const sampleWordCountEl = document.getElementById("sample-word-count");
      const btnLoadSample = document.getElementById("btn-load-sample");

      function updateSampleWordCount() {
        const text = sampleTextArea.value;
        const words = countWords(text);
        const chars = countChars(text);
        sampleWordCountEl.textContent = `Sample text: ${words} words, ${chars} characters`;
      }

      sampleTextArea.addEventListener("input", updateSampleWordCount);
      btnLoadSample.addEventListener("click", () => {
        typingBox.value = sampleTextArea.value;
        resetLive();
        typingBox.focus();
      });
      updateSampleWordCount();

      // Manual input logic
      const manualWordsInput = document.getElementById("manual-words");
      const manualMinutesInput = document.getElementById("manual-minutes");
      const manualSecondsInput = document.getElementById("manual-seconds");
      const manualErrorsInput = document.getElementById("manual-errors");
      const btnCalcManual = document.getElementById("btn-calc-manual");

      const manualGrossWpmEl = document.getElementById("manual-gross-wpm");
      const manualNetWpmEl = document.getElementById("manual-net-wpm");
      const manualAccuracyEl = document.getElementById("manual-accuracy");
      const manualCpmEl = document.getElementById("manual-cpm");

      btnCalcManual.addEventListener("click", () => {
        const words = parseFloat(manualWordsInput.value) || 0;
        const minutes = parseFloat(manualMinutesInput.value) || 0;
        const seconds = parseFloat(manualSecondsInput.value) || 0;
        const errors = Math.max(0, parseFloat(manualErrorsInput.value) || 0);

        const totalSeconds = minutes * 60 + seconds;
        const timeMinutes = totalSeconds / 60;

        if (words <= 0 || timeMinutes <= 0) {
          manualGrossWpmEl.textContent = "0";
          manualNetWpmEl.textContent = "0";
          manualAccuracyEl.textContent = "0%";
          manualCpmEl.textContent = "0";
          return;
        }

        const grossWpm = words / timeMinutes;
        const netWords = Math.max(0, words - errors);
        const netWpm = netWords / timeMinutes;
        const accuracy = words > 0 ? (netWords / words) * 100 : 0;

        // Approximate characters as 5 per word (common convention)
        const chars = words * 5;
        const cpm = chars / timeMinutes;

        manualGrossWpmEl.textContent = grossWpm.toFixed(1);
        manualNetWpmEl.textContent = netWpm.toFixed(1);
        manualAccuracyEl.textContent = accuracy.toFixed(1) + "%";
        manualCpmEl.textContent = cpm.toFixed(0);
      });

      // Estimator logic
      const estimatorText = document.getElementById("estimator-text");
      const estimatorWordCountEl = document.getElementById(
        "estimator-word-count"
      );
      const estimatorWpmInput = document.getElementById("estimator-wpm");
      const btnEstimateTime = document.getElementById("btn-estimate-time");
      const estimatorTimeEl = document.getElementById("estimator-time");
      const estimatorMinutesEl = document.getElementById("estimator-minutes");
      const estimatorHoursEl = document.getElementById("estimator-hours");

      function updateEstimatorWordCount() {
        const text = estimatorText.value;
        const words = countWords(text);
        const chars = countChars(text);
        estimatorWordCountEl.textContent = `${words} words, ${chars} characters`;
      }

      estimatorText.addEventListener("input", updateEstimatorWordCount);
      updateEstimatorWordCount();

      btnEstimateTime.addEventListener("click", () => {
        const text = estimatorText.value;
        const words = countWords(text);
        const wpm = parseFloat(estimatorWpmInput.value) || 0;

        if (words <= 0 || wpm <= 0) {
          estimatorTimeEl.textContent = "0 s";
          estimatorMinutesEl.textContent = "0.0";
          estimatorHoursEl.textContent = "0.00";
          return;
        }

        const minutes = words / wpm;
        const seconds = minutes * 60;
        estimatorTimeEl.textContent = formatTime(seconds);
        estimatorMinutesEl.textContent = minutes.toFixed(2);
        estimatorHoursEl.textContent = (minutes / 60).toFixed(2);
      });

      // Initialize default WPM in estimator from last manual net WPM if available
      btnCalcManual.addEventListener("click", () => {
        const net = parseFloat(manualNetWpmEl.textContent);
        if (isFinite(net) && net > 0) {
          estimatorWpmInput.value = net.toFixed(1);
        }
      });

      // Accessibility: ensure only one tab is active on load
      activateTab(tabLive);
    </script>

