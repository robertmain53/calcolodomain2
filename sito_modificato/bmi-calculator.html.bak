    <script>
      (function () {
        const unitMetricBtn = document.getElementById("unit-metric");
        const unitImperialBtn = document.getElementById("unit-imperial");
        const heightMetricGroup = document.getElementById(
          "height-metric-group"
        );
        const heightImperialGroup = document.getElementById(
          "height-imperial-group"
        );
        const weightMetricGroup = document.getElementById(
          "weight-metric-group"
        );
        const weightImperialGroup = document.getElementById(
          "weight-imperial-group"
        );

        const ageInput = document.getElementById("age");
        const sexMaleBtn = document.getElementById("sex-male");
        const sexFemaleBtn = document.getElementById("sex-female");

        const heightCmInput = document.getElementById("height-cm");
        const heightFtInput = document.getElementById("height-ft");
        const heightInInput = document.getElementById("height-in");
        const weightKgInput = document.getElementById("weight-kg");
        const weightLbInput = document.getElementById("weight-lb");

        const calculateBtn = document.getElementById("calculate-btn");
        const resetBtn = document.getElementById("reset-btn");
        const errorMsg = document.getElementById("input-error-msg");

        const bmiValueEl = document.getElementById("bmi-value");
        const bmiCategoryTextEl = document.getElementById("bmi-category-text");
        const bmiCategoryBadgeEl =
          document.getElementById("bmi-category-badge");
        const bmiPointerEl = document.getElementById("bmi-pointer");
        const bmiInterpretationEl =
          document.getElementById("bmi-interpretation");
        const healthyWeightLineEl = document.getElementById(
          "healthy-weight-range-line"
        );
        const childNoteEl = document.getElementById("child-note");

        let currentUnit = "metric";
        let currentSex = null;

        function setUnit(unit) {
          currentUnit = unit;
          if (unit === "metric") {
            unitMetricBtn.classList.add(
              "bg-white",
              "shadow",
              "border",
              "border-gray-300",
              "text-gray-900"
            );
            unitMetricBtn.setAttribute("aria-pressed", "true");
            unitImperialBtn.classList.remove(
              "bg-white",
              "shadow",
              "border",
              "border-gray-300",
              "text-gray-900"
            );
            unitImperialBtn.classList.add("text-gray-600");
            unitImperialBtn.setAttribute("aria-pressed", "false");

            heightMetricGroup.classList.remove("hidden");
            weightMetricGroup.classList.remove("hidden");
            heightImperialGroup.classList.add("hidden");
            weightImperialGroup.classList.add("hidden");
          } else {
            unitImperialBtn.classList.add(
              "bg-white",
              "shadow",
              "border",
              "border-gray-300",
              "text-gray-900"
            );
            unitImperialBtn.setAttribute("aria-pressed", "true");
            unitMetricBtn.classList.remove(
              "bg-white",
              "shadow",
              "border",
              "border-gray-300",
              "text-gray-900"
            );
            unitMetricBtn.classList.add("text-gray-600");
            unitMetricBtn.setAttribute("aria-pressed", "false");

            heightMetricGroup.classList.add("hidden");
            weightMetricGroup.classList.add("hidden");
            heightImperialGroup.classList.remove("hidden");
            weightImperialGroup.classList.remove("hidden");
          }
          clearErrors();
        }

        function setSex(sex) {
          currentSex = sex;
          if (sex === "male") {
            sexMaleBtn.classList.add("border-blue-500", "bg-blue-50");
            sexMaleBtn.setAttribute("aria-pressed", "true");
            sexFemaleBtn.classList.remove("border-blue-500", "bg-blue-50");
            sexFemaleBtn.setAttribute("aria-pressed", "false");
          } else if (sex === "female") {
            sexFemaleBtn.classList.add("border-blue-500", "bg-blue-50");
            sexFemaleBtn.setAttribute("aria-pressed", "true");
            sexMaleBtn.classList.remove("border-blue-500", "bg-blue-50");
            sexMaleBtn.setAttribute("aria-pressed", "false");
          } else {
            sexMaleBtn.classList.remove("border-blue-500", "bg-blue-50");
            sexFemaleBtn.classList.remove("border-blue-500", "bg-blue-50");
            sexMaleBtn.setAttribute("aria-pressed", "false");
            sexFemaleBtn.setAttribute("aria-pressed", "false");
          }
        }

        function clearErrors() {
          errorMsg.classList.add("hidden");
          errorMsg.textContent = "";
          [
            heightCmInput,
            heightFtInput,
            heightInInput,
            weightKgInput,
            weightLbInput,
            ageInput,
          ].forEach(function (el) {
            if (el) el.classList.remove("input-error");
          });
        }

        function validateInputs() {
          clearErrors();
          let valid = true;
          let messages = [];

          const ageVal = ageInput.value ? parseFloat(ageInput.value) : null;
          const isChild = ageVal !== null && ageVal < 18;

          if (ageVal !== null && (ageVal < 2 || ageVal > 120)) {
            valid = false;
            messages.push("Age should be between 2 and 120 years.");
            ageInput.classList.add("input-error");
          }

          let heightM = null;
          let weightKg = null;

          if (currentUnit === "metric") {
            const h = heightCmInput.value
              ? parseFloat(heightCmInput.value)
              : null;
            const w = weightKgInput.value
              ? parseFloat(weightKgInput.value)
              : null;
            if (!h || h <= 0) {
              valid = false;
              messages.push("Please enter a valid height in centimeters.");
              heightCmInput.classList.add("input-error");
            } else {
              heightM = h / 100;
            }
            if (!w || w <= 0) {
              valid = false;
              messages.push("Please enter a valid weight in kilograms.");
              weightKgInput.classList.add("input-error");
            } else {
              weightKg = w;
            }
          } else {
            const ft = heightFtInput.value
              ? parseFloat(heightFtInput.value)
              : 0;
            const inch = heightInInput.value
              ? parseFloat(heightInInput.value)
              : 0;
            const wlb = weightLbInput.value
              ? parseFloat(weightLbInput.value)
              : null;

            const totalIn = ft * 12 + inch;
            if (!totalIn || totalIn <= 0) {
              valid = false;
              messages.push("Please enter a valid height in feet and inches.");
              heightFtInput.classList.add("input-error");
              heightInInput.classList.add("input-error");
            } else {
              heightM = totalIn * 0.0254;
            }
            if (!wlb || wlb <= 0) {
              valid = false;
              messages.push("Please enter a valid weight in pounds.");
              weightLbInput.classList.add("input-error");
            } else {
              weightKg = wlb * 0.45359237;
            }
          }

          if (!valid) {
            errorMsg.textContent = messages.join(" ");
            errorMsg.classList.remove("hidden");
            return null;
          }

          return { heightM, weightKg, age: ageVal, isChild };
        }

        function classifyBmi(bmi, age, isChild) {
          if (!isFinite(bmi) || bmi <= 0)
            return {
              label: "Invalid BMI",
              color: "#6b7280",
              dot: "#9ca3af",
              note: "",
            };

          if (age && age < 18) {
            let label;
            if (bmi < 14) label = "Likely underweight for age";
            else if (bmi < 18) label = "Likely healthy weight for age";
            else if (bmi < 22) label = "Likely overweight for age";
            else label = "Likely obesity for age";
            return {
              label,
              color: "#0ea5e9",
              dot: "#0ea5e9",
              note: "For children and teens, BMI should be interpreted using official age- and sex-specific percentiles with a clinician.",
            };
          }

          if (bmi < 18.5) {
            return {
              label: "Underweight",
              color: "#2563eb",
              dot: "#60a5fa",
              note: "Your BMI is below the healthy range. Consider discussing your weight, diet, and any symptoms with a healthcare professional.",
            };
          } else if (bmi < 25) {
            return {
              label: "Healthy weight",
              color: "#16a34a",
              dot: "#4ade80",
              note: "Your BMI is in the healthy range for most adults. Continue focusing on balanced nutrition, regular activity, and sleep.",
            };
          } else if (bmi < 30) {
            return {
              label: "Overweight",
              color: "#ea580c",
              dot: "#fdba74",
              note: "Your BMI is above the healthy range. Small, sustainable changes in diet and activity can meaningfully improve health.",
            };
          } else if (bmi < 35) {
            return {
              label: "Obesity class I",
              color: "#dc2626",
              dot: "#fca5a5",
              note: "Your BMI is in the obesity range. It is advisable to discuss weight management options with a healthcare professional.",
            };
          } else if (bmi < 40) {
            return {
              label: "Obesity class II",
              color: "#b91c1c",
              dot: "#f87171",
              note: "Your BMI suggests a higher risk of weight-related conditions. Professional medical guidance is strongly recommended.",
            };
          } else {
            return {
              label: "Obesity class III",
              color: "#991b1b",
              dot: "#ef4444",
              note: "Your BMI is in the highest obesity category. Please seek personalized advice from a healthcare provider.",
            };
          }
        }

        function updatePointer(bmi) {
          if (!isFinite(bmi) || bmi <= 0) {
            bmiPointerEl.style.left = "-9999px";
            return;
          }
          const minBmi = 14;
          const maxBmi = 40;
          let clamped = Math.max(minBmi, Math.min(maxBmi, bmi));
          const percent = ((clamped - minBmi) / (maxBmi - minBmi)) * 100;
          bmiPointerEl.style.left = percent + "%";
        }

        function updateHealthyWeightRange(heightM) {
          if (!heightM || !isFinite(heightM)) {
            healthyWeightLineEl.textContent =
              "For your height, a healthy BMI (18.5–24.9) corresponds to a weight range of —.";
            return;
          }
          const minKg = 18.5 * heightM * heightM;
          const maxKg = 24.9 * heightM * heightM;
          const minLb = minKg * 2.20462262;
          const maxLb = maxKg * 2.20462262;
          healthyWeightLineEl.textContent =
            "For your height, a healthy BMI (18.5–24.9) corresponds to a weight range of " +
            minKg.toFixed(1) +
            "–" +
            maxKg.toFixed(1) +
            " kg (" +
            minLb.toFixed(0) +
            "–" +
            maxLb.toFixed(0) +
            " lb).";
        }

        function calculateBmi() {
          const vals = validateInputs();
          if (!vals) return;

          const { heightM, weightKg, age, isChild } = vals;
          const bmi = weightKg / (heightM * heightM);
          const bmiRounded = Math.round(bmi * 10) / 10;

          bmiValueEl.textContent = bmiRounded.toFixed(1);

          const classification = classifyBmi(bmiRounded, age, isChild);
          bmiCategoryTextEl.textContent = classification.label;
          bmiCategoryBadgeEl.style.backgroundColor =
            classification.color + "1A";
          bmiCategoryBadgeEl.style.color = classification.color;
          const dotEl = bmiCategoryBadgeEl.querySelector(".result-dot");
          if (dotEl) dotEl.style.backgroundColor = classification.dot;
          bmiInterpretationEl.textContent =
            classification.note ||
            "BMI is a screening tool only. It does not directly measure body fat or health.";

          updatePointer(bmiRounded);
          updateHealthyWeightRange(heightM);

          if (age && age < 18) {
            childNoteEl.classList.remove("hidden");
          } else {
            childNoteEl.classList.add("hidden");
          }
        }

        function resetAll() {
          [
            ageInput,
            heightCmInput,
            heightFtInput,
            heightInInput,
            weightKgInput,
            weightLbInput,
          ].forEach(function (el) {
            if (el) el.value = "";
          });
          setSex(null);
          setUnit("metric");
          clearErrors();
          bmiValueEl.textContent = "--";
          bmiCategoryTextEl.textContent = "Enter your details to see your BMI";
          bmiCategoryBadgeEl.style.backgroundColor = "#f3f4f6";
          bmiCategoryBadgeEl.style.color = "#374151";
          const dotEl = bmiCategoryBadgeEl.querySelector(".result-dot");
          if (dotEl) dotEl.style.backgroundColor = "#9ca3af";
          bmiPointerEl.style.left = "-9999px";
          bmiInterpretationEl.textContent =
            "BMI is a screening tool only. It does not directly measure body fat or health.";
          healthyWeightLineEl.textContent =
            "For your height, a healthy BMI (18.5–24.9) corresponds to a weight range of —.";
          childNoteEl.classList.add("hidden");
        }

        unitMetricBtn.addEventListener("click", function () {
          setUnit("metric");
        });
        unitImperialBtn.addEventListener("click", function () {
          setUnit("imperial");
        });
        sexMaleBtn.addEventListener("click", function () {
          setSex(currentSex === "male" ? null : "male");
        });
        sexFemaleBtn.addEventListener("click", function () {
          setSex(currentSex === "female" ? null : "female");
        });

        calculateBtn.addEventListener("click", calculateBmi);
        resetBtn.addEventListener("click", resetAll);

        [
          ageInput,
          heightCmInput,
          heightFtInput,
          heightInInput,
          weightKgInput,
          weightLbInput,
        ].forEach(function (el) {
          if (!el) return;
          el.addEventListener("input", function () {
            clearErrors();
          });
        });

        [
          ageInput,
          heightCmInput,
          heightFtInput,
          heightInInput,
          weightKgInput,
          weightLbInput,
        ].forEach(function (el) {
          if (!el) return;
          el.addEventListener("keydown", function (e) {
            if (e.key === "Enter") {
              e.preventDefault();
              calculateBmi();
            }
          });
        });

        setUnit("metric");
      })();
    </script>

