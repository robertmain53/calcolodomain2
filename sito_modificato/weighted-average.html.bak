    <script>
      // Weighted Average Calculator JS
      (function () {
        const rowsContainer = document.getElementById("rows-container");
        const addRowBtn = document.getElementById("add-row-btn");
        const clearRowsBtn = document.getElementById("clear-rows-btn");
        const calculateBtn = document.getElementById("calculate-btn");
        const weightTypeSelect = document.getElementById("weight-type");
        const decimalPlacesInput = document.getElementById("decimal-places");
        const resultSection = document.getElementById("results-section");
        const resultValueEl = document.getElementById("result-value");
        const resultWeightSumEl = document.getElementById("result-weight-sum");
        const resultWeightSumNormEl = document.getElementById(
          "result-weight-sum-normalized"
        );
        const stepsContainer = document.getElementById("steps-container");
        const errorMessageEl = document.getElementById("error-message");
        const copyStepsBtn = document.getElementById("copy-steps-btn");
        const copyStepsStatus = document.getElementById("copy-steps-status");

        const exampleGradesBtn = document.getElementById("load-example-grades");
        const examplePortfolioBtn = document.getElementById(
          "load-example-portfolio"
        );
        const exampleAvgPriceBtn = document.getElementById(
          "load-example-average-price"
        );

        let rowCount = 0;

        function createRow(value = "", weight = "") {
          rowCount += 1;
          const tr = document.createElement("tr");
          tr.className = "border-t border-gray-100";
          tr.innerHTML = `
        <td class="px-2 py-1 text-xs text-gray-500">${rowCount}</td>
        <td class="px-2 py-1">
          <input type="number" step="any" class="table-input value-input" aria-label="Value ${rowCount}" value="${value}">
        </td>
        <td class="px-2 py-1">
          <input type="number" step="any" class="table-input weight-input" aria-label="Weight ${rowCount}" value="${weight}">
        </td>
        <td class="px-2 py-1 text-right">
          <button type="button" class="text-xs text-red-600 hover:underline remove-row-btn">Remove</button>
        </td>
      `;
          rowsContainer.appendChild(tr);
        }

        function clearRows() {
          rowsContainer.innerHTML = "";
          rowCount = 0;
          for (let i = 0; i < 4; i++) {
            createRow();
          }
          resultSection.classList.add("hidden");
          errorMessageEl.classList.add("hidden");
          errorMessageEl.textContent = "";
        }

        function parseRows() {
          const values = [];
          const weights = [];
          const valueInputs = rowsContainer.querySelectorAll(".value-input");
          const weightInputs = rowsContainer.querySelectorAll(".weight-input");

          valueInputs.forEach((vInput, idx) => {
            const wInput = weightInputs[idx];
            const v = vInput.value.trim();
            const w = wInput.value.trim();
            if (v !== "" && w !== "") {
              const vNum = Number(v);
              const wNum = Number(w);
              if (!isFinite(vNum) || !isFinite(wNum)) return;
              if (wNum < 0) {
                throw new Error(
                  "Weights cannot be negative. Use zero weight to ignore a value."
                );
              }
              if (wNum === 0) return; // ignore zero-weight entries
              values.push(vNum);
              weights.push(wNum);
            }
          });

          return { values, weights };
        }

        function formatNumber(num, decimals) {
          if (!isFinite(num)) return "NaN";
          return Number(num.toFixed(decimals)).toString();
        }

        function calculateWeightedAverage() {
          errorMessageEl.classList.add("hidden");
          errorMessageEl.textContent = "";
          copyStepsStatus.classList.add("hidden");

          let decimals = parseInt(decimalPlacesInput.value, 10);
          if (!isFinite(decimals) || decimals < 0) decimals = 2;
          if (decimals > 10) decimals = 10;

          let data;
          try {
            data = parseRows();
          } catch (e) {
            errorMessageEl.textContent = e.message;
            errorMessageEl.classList.remove("hidden");
            resultSection.classList.add("hidden");
            return;
          }

          const { values, weights } = data;

          if (values.length === 0) {
            errorMessageEl.textContent =
              "Please enter at least one value with a positive weight.";
            errorMessageEl.classList.remove("hidden");
            resultSection.classList.add("hidden");
            return;
          }

          const weightType = weightTypeSelect.value; // 'raw' or 'percent'
          let rawWeights = [...weights];

          if (weightType === "percent") {
            // convert percentages to raw weights by dividing by 100
            rawWeights = rawWeights.map((w) => w / 100);
          }

          const weightedProducts = values.map((v, i) => v * rawWeights[i]);
          const sumWeighted = weightedProducts.reduce((a, b) => a + b, 0);
          const sumWeights = rawWeights.reduce((a, b) => a + b, 0);

          if (sumWeights === 0) {
            errorMessageEl.textContent =
              "The sum of weights is zero. Please use at least one positive weight.";
            errorMessageEl.classList.remove("hidden");
            resultSection.classList.add("hidden");
            return;
          }

          const weightedAvg = sumWeighted / sumWeights;

          // Update results
          resultValueEl.textContent = formatNumber(weightedAvg, decimals);
          resultWeightSumEl.textContent =
            weightType === "percent"
              ? formatNumber(
                  weights.reduce((a, b) => a + b, 0),
                  4
                ) + " %"
              : formatNumber(
                  weights.reduce((a, b) => a + b, 0),
                  4
                );

          resultWeightSumNormEl.textContent = "1.0000";

          // Build steps explanation
          let stepsHtml = "";

          // Step 1: table
          stepsHtml += "<p><strong>1. List values and weights</strong></p>";
          stepsHtml +=
            '<table class="min-w-full text-xs border border-gray-200 mb-2"><thead><tr class="bg-gray-50"><th class="px-2 py-1 border-b">i</th><th class="px-2 py-1 border-b">x<sub>i</sub></th><th class="px-2 py-1 border-b">w<sub>i</sub>' +
            (weightType === "percent" ? " (%)" : "") +
            '</th><th class="px-2 py-1 border-b">w<sub>i</sub>x<sub>i</sub></th></tr></thead><tbody>';

          values.forEach((v, i) => {
            const wDisplay =
              weightType === "percent" ? weights[i] : rawWeights[i];
            stepsHtml += `<tr>
          <td class="px-2 py-1 border-b text-center">${i + 1}</td>
          <td class="px-2 py-1 border-b text-right">${formatNumber(
            v,
            decimals
          )}</td>
          <td class="px-2 py-1 border-b text-right">${formatNumber(
            wDisplay,
            4
          )}</td>
          <td class="px-2 py-1 border-b text-right">${formatNumber(
            weightedProducts[i],
            decimals
          )}</td>
        </tr>`;
          });
          stepsHtml += "</tbody></table>";

          // Step 2: sums
          stepsHtml += "<p><strong>2. Compute sums</strong></p>";
          stepsHtml += `<p>Sum of weighted values: \\( \\sum w_i x_i = ${formatNumber(
            sumWeighted,
            decimals
          )} \\)</p>`;
          stepsHtml += `<p>Sum of weights: \\( \\sum w_i = ${formatNumber(
            sumWeights,
            4
          )} \\)</p>`;

          // Step 3: formula
          stepsHtml +=
            "<p><strong>3. Apply the weighted average formula</strong></p>";
          stepsHtml += `<p>
        \\[
        \\bar{x}_w = \\frac{\\sum w_i x_i}{\\sum w_i}
        = \\frac{${formatNumber(sumWeighted, decimals)}}{${formatNumber(
            sumWeights,
            4
          )}}
        \\approx ${formatNumber(weightedAvg, decimals)}
        \\]
      </p>`;

          stepsContainer.innerHTML = stepsHtml;
          if (window.MathJax && window.MathJax.typesetPromise) {
            window.MathJax.typesetPromise([stepsContainer]);
          }

          resultSection.classList.remove("hidden");
        }

        function loadExampleGrades() {
          clearRows();
          weightTypeSelect.value = "percent";
          const examples = [
            { v: 80, w: 20 },
            { v: 75, w: 30 },
            { v: 90, w: 50 },
          ];
          rowsContainer.innerHTML = "";
          rowCount = 0;
          examples.forEach((e) => createRow(e.v, e.w));
        }

        function loadExamplePortfolio() {
          clearRows();
          weightTypeSelect.value = "raw";
          const examples = [
            { v: 5, w: 4000 },
            { v: 8, w: 3000 },
            { v: 2, w: 3000 },
          ];
          rowsContainer.innerHTML = "";
          rowCount = 0;
          examples.forEach((e) => createRow(e.v, e.w));
        }

        function loadExampleAveragePrice() {
          clearRows();
          weightTypeSelect.value = "raw";
          const examples = [
            { v: 10, w: 5 }, // 5 units at $10
            { v: 12, w: 3 }, // 3 units at $12
            { v: 9, w: 2 }, // 2 units at $9
          ];
          rowsContainer.innerHTML = "";
          rowCount = 0;
          examples.forEach((e) => createRow(e.v, e.w));
        }

        function copyStepsToClipboard() {
          const tempDiv = document.createElement("div");
          tempDiv.innerHTML = stepsContainer.innerHTML;
          const text = tempDiv.textContent || tempDiv.innerText || "";
          if (!text.trim()) return;
          navigator.clipboard
            .writeText(text.trim())
            .then(() => {
              copyStepsStatus.classList.remove("hidden");
              setTimeout(() => copyStepsStatus.classList.add("hidden"), 2000);
            })
            .catch(() => {});
        }

        // Event listeners
        addRowBtn.addEventListener("click", () => createRow());
        clearRowsBtn.addEventListener("click", clearRows);
        calculateBtn.addEventListener("click", calculateWeightedAverage);
        copyStepsBtn.addEventListener("click", copyStepsToClipboard);

        exampleGradesBtn.addEventListener("click", loadExampleGrades);
        examplePortfolioBtn.addEventListener("click", loadExamplePortfolio);
        exampleAvgPriceBtn.addEventListener("click", loadExampleAveragePrice);

        rowsContainer.addEventListener("click", (e) => {
          if (e.target.classList.contains("remove-row-btn")) {
            const row = e.target.closest("tr");
            if (row) {
              row.remove();
            }
          }
        });

        // Initialize with some empty rows
        clearRows();
      })();
    </script>

