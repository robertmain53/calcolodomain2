    <script>
      // Mobile menu toggle
      const mobileToggle = document.getElementById("mobile-menu-toggle");
      const mobileMenu = document.getElementById("mobile-menu");
      if (mobileToggle && mobileMenu) {
        mobileToggle.addEventListener("click", () => {
          const expanded =
            mobileToggle.getAttribute("aria-expanded") === "true";
          mobileToggle.setAttribute("aria-expanded", String(!expanded));
          mobileMenu.classList.toggle("hidden");
        });
      }

      // Helpers (BigInt-based)
      function toBigIntStrict(value) {
        const s = value.trim();
        if (s === "") return null;
        try {
          // Allow leading +/-, digits only
          if (!/^[+-]?\d+$/.test(s)) return null;
          return BigInt(s);
        } catch (e) {
          return null;
        }
      }

      function bigIntGcd(a, b) {
        a = a < 0n ? -a : a;
        b = b < 0n ? -b : b;
        while (b !== 0n) {
          const t = b;
          b = a % b;
          a = t;
        }
        return a;
      }

      function bigIntExtendedGcd(a, b) {
        // Returns {g, x, y} with g = gcd(a,b), ax + by = g
        let old_r = a,
          r = b;
        let old_s = 1n,
          s = 0n;
        let old_t = 0n,
          t = 1n;

        while (r !== 0n) {
          const q = old_r / r;
          [old_r, r] = [r, old_r - q * r];
          [old_s, s] = [s, old_s - q * s];
          [old_t, t] = [t, old_t - q * t];
        }
        return { g: old_r, x: old_s, y: old_t };
      }

      function bigIntMod(a, m) {
        const r = a % m;
        return r >= 0n ? r : r + m;
      }

      function bigIntInvMod(a, m) {
        const eg = bigIntExtendedGcd(a, m);
        if (eg.g !== 1n && eg.g !== -1n) return null;
        // Inverse exists when gcd(a,m) = 1 (up to sign)
        let inv = eg.x;
        if (eg.g === -1n) inv = -inv;
        return bigIntMod(inv, m);
      }

      function formatBigInt(x) {
        return x.toString();
      }

      // Build congruence table
      const crtCountInput = document.getElementById("crt-count");
      const crtUpdateTableBtn = document.getElementById("crt-update-table");
      const crtExampleBtn = document.getElementById("crt-example-btn");
      const crtTableContainer = document.getElementById("crt-table-container");
      const crtCalcBtn = document.getElementById("crt-calc-btn");
      const crtClearBtn = document.getElementById("crt-clear-btn");
      const crtResult = document.getElementById("crt-result");

      function resetCrtResult() {
        if (!crtResult) return;
        crtResult.innerHTML =
          '<p class="text-gray-500">Solution, combined modulus, and step-by-step CRT construction will appear here after you click <span class="font-semibold">Calculate</span>.</p>';
      }

      function showCrtError(msg) {
        if (!crtResult) return;
        crtResult.innerHTML =
          '<div class="space-y-2"><p class="text-red-700 text-sm">' +
          msg +
          "</p></div>";
      }

      function buildCrtTable(count) {
        let n = parseInt(count, 10);
        if (!Number.isFinite(n) || n < 2) n = 2;
        if (n > 8) n = 8;
        crtCountInput.value = n;

        let html = '<table class="data-table">';
        html +=
          '<thead class="bg-gray-100"><tr><th>#</th><th>aᵢ (remainder)</th><th>mᵢ (modulus &gt; 0)</th></tr></thead><tbody>';
        for (let i = 0; i < n; i++) {
          const aId = "crt-a-" + i;
          const mId = "crt-m-" + i;
          html += "<tr>";
          html += '<td class="font-mono">' + (i + 1) + "</td>";
          html +=
            '<td><input type="text" id="' +
            aId +
            '" class="w-28 border border-gray-300 rounded px-1 py-0.5 text-xs focus:outline-none focus:ring-1 focus:ring-blue-500" /></td>';
          html +=
            '<td><input type="text" id="' +
            mId +
            '" class="w-28 border border-gray-300 rounded px-1 py-0.5 text-xs focus:outline-none focus:ring-1 focus:ring-blue-500" /></td>';
          html += "</tr>";
        }
        html += "</tbody></table>";
        crtTableContainer.innerHTML = html;
      }

      function loadCrtExample() {
        // Classic example: x ≡ 2 (mod 3), x ≡ 3 (mod 5), x ≡ 2 (mod 7)
        buildCrtTable(3);
        const examples = [
          { a: "2", m: "3" },
          { a: "3", m: "5" },
          { a: "2", m: "7" },
        ];
        examples.forEach((row, i) => {
          const aInput = document.getElementById("crt-a-" + i);
          const mInput = document.getElementById("crt-m-" + i);
          if (aInput) aInput.value = row.a;
          if (mInput) mInput.value = row.m;
        });
        resetCrtResult();
      }

      function readCrtSystem() {
        const n = parseInt(crtCountInput.value, 10) || 3;
        const congruences = [];
        for (let i = 0; i < n; i++) {
          const aInput = document.getElementById("crt-a-" + i);
          const mInput = document.getElementById("crt-m-" + i);
          if (!aInput || !mInput) continue;
          const aStr = aInput.value.trim();
          const mStr = mInput.value.trim();
          if (aStr === "" && mStr === "") continue;

          const a = toBigIntStrict(aStr);
          const m = toBigIntStrict(mStr);
          if (a === null || m === null) {
            showCrtError(
              "All remainders aᵢ and moduli mᵢ must be integers (rows may be left completely empty)."
            );
            return null;
          }
          if (m <= 0n) {
            showCrtError("Each modulus mᵢ must be a positive integer.");
            return null;
          }
          // Normalize a into [0, m)
          const aNorm = bigIntMod(a, m);
          congruences.push({ a: aNorm, m, row: i + 1 });
        }

        if (congruences.length < 2) {
          showCrtError(
            "Enter at least two non-empty congruences to apply the Chinese remainder theorem."
          );
          return null;
        }

        return congruences;
      }

      function crtSolve(congruences) {
        // Merge congruences iteratively using generalized CRT
        let a = congruences[0].a; // current remainder
        let n = congruences[0].m; // current modulus
        const steps = [];

        for (let idx = 1; idx < congruences.length; idx++) {
          const { a: b, m, row } = congruences[idx];

          const g = bigIntGcd(n, m);
          const diff = b - a;

          if (bigIntMod(diff, g) !== 0n) {
            return {
              ok: false,
              conflict: {
                index: idx,
                aCur: a,
                nCur: n,
                aNew: b,
                mNew: m,
                g,
              },
            };
          }

          const n1 = n / g;
          const m1 = m / g;
          const rhs = diff / g;

          const inv = bigIntInvMod(n1, m1);
          if (inv === null) {
            // Should not happen if gcd(n1, m1) = 1, but guard anyway
            return {
              ok: false,
              conflict: {
                index: idx,
                aCur: a,
                nCur: n,
                aNew: b,
                mNew: m,
                g,
                reason: "inverse",
              },
            };
          }

          const t = bigIntMod(rhs * inv, m1);
          const x = a + n * t;
          const newMod = n * m1; // lcm(n, m)

          steps.push({
            index: idx,
            aPrev: a,
            nPrev: n,
            aNew: b,
            mNew: m,
            g,
            n1,
            m1,
            rhs,
            inv,
            t,
            x: bigIntMod(x, newMod),
            newMod,
          });

          a = bigIntMod(x, newMod);
          n = newMod;
        }

        return {
          ok: true,
          a,
          n,
          steps,
        };
      }

      function analyzePairwiseGcds(congruences) {
        const pairs = [];
        for (let i = 0; i < congruences.length; i++) {
          for (let j = i + 1; j < congruences.length; j++) {
            const g = bigIntGcd(congruences[i].m, congruences[j].m);
            if (g !== 1n) {
              pairs.push({
                i: i + 1,
                j: j + 1,
                g,
              });
            }
          }
        }
        return pairs;
      }

      function renderCrtSolution(congruences, solution) {
        let html = '<div class="space-y-3">';

        if (solution.ok) {
          const x0 = solution.a;
          const M = solution.n;

          html +=
            '<p class="flex items-center gap-2"><span class="font-semibold">System status:</span>';
          html +=
            '<span class="result-tag result-tag-ok"><span class="w-1.5 h-1.5 rounded-full bg-current inline-block"></span><span>Consistent – solution exists</span></span></p>';

          html +=
            '<p><span class="font-semibold">Least nonnegative solution x₀:</span> ';
          html += '<span class="font-mono">' + formatBigInt(x0) + "</span></p>";

          html +=
            '<p><span class="font-semibold">Combined modulus M (lcm of all mᵢ):</span> ';
          html += '<span class="font-mono">' + formatBigInt(M) + "</span></p>";

          html += '<p class="text-sm text-gray-700">';
          html += "All solutions are of the form ";
          html +=
            '<span class="font-mono">x = ' +
            formatBigInt(x0) +
            " + k·" +
            formatBigInt(M) +
            "</span>";
          html += " with integer k.";
          html += "</p>";

          // Show original system
          html += '<div class="mt-3">';
          html +=
            '<p class="font-semibold text-sm mb-1">Original system of congruences</p>';
          html += '<div class="table-scroll"><table class="data-table">';
          html +=
            '<thead class="bg-gray-100"><tr><th>#</th><th>aᵢ</th><th>mᵢ</th></tr></thead><tbody>';
          congruences.forEach((c, idx) => {
            html += "<tr>";
            html += '<td class="font-mono">' + (idx + 1) + "</td>";
            html += '<td class="font-mono">' + formatBigInt(c.a) + "</td>";
            html += '<td class="font-mono">' + formatBigInt(c.m) + "</td>";
            html += "</tr>";
          });
          html += "</tbody></table></div>";
          html += "</div>";

          // Pairwise gcd analysis
          const gcdPairs = analyzePairwiseGcds(congruences);
          if (gcdPairs.length === 0) {
            html +=
              '<p class="text-xs text-gray-600 mt-2">All moduli are pairwise coprime, so the classical CRT applies and the combined modulus equals the product of the moduli.</p>';
          } else {
            html += '<div class="mt-2 text-xs text-gray-700">';
            html += '<p class="font-semibold mb-1">Pairwise gcds of moduli</p>';
            html += '<ul class="list-disc ml-4">';
            gcdPairs.forEach((p) => {
              html +=
                "<li>Rows " +
                p.i +
                " and " +
                p.j +
                ' share gcd = <span class="font-mono">' +
                formatBigInt(p.g) +
                "</span>.</li>";
            });
            html += "</ul>";
            html +=
              '<p class="mt-1 text-gray-600">Because the corresponding remainders agree modulo these gcd values, the generalized CRT still guarantees consistency.</p>';
            html += "</div>";
          }

          // Step-by-step merging
          if (solution.steps && solution.steps.length > 0) {
            html += '<div class="mt-4">';
            html +=
              '<p class="font-semibold text-sm mb-1">Iterative CRT merging (generalized case)</p>';
            html += '<div class="table-scroll"><table class="data-table">';
            html +=
              '<thead class="bg-gray-100"><tr><th>Step</th><th>Merge</th><th>gcd</th><th>n₁</th><th>m₁</th><th>rhs</th><th>inv(n₁)</th><th>t</th><th>x (mod new M)</th></tr></thead><tbody>';
            solution.steps.forEach((st, k) => {
              html += "<tr>";
              html += '<td class="font-mono">' + (k + 1) + "</td>";
              html +=
                '<td class="font-mono">[' +
                formatBigInt(st.aPrev) +
                " mod " +
                formatBigInt(st.nPrev) +
                "], [" +
                formatBigInt(st.aNew) +
                " mod " +
                formatBigInt(st.mNew) +
                "]</td>";
              html += '<td class="font-mono">' + formatBigInt(st.g) + "</td>";
              html += '<td class="font-mono">' + formatBigInt(st.n1) + "</td>";
              html += '<td class="font-mono">' + formatBigInt(st.m1) + "</td>";
              html += '<td class="font-mono">' + formatBigInt(st.rhs) + "</td>";
              html += '<td class="font-mono">' + formatBigInt(st.inv) + "</td>";
              html += '<td class="font-mono">' + formatBigInt(st.t) + "</td>";
              html +=
                '<td class="font-mono">' +
                formatBigInt(st.x) +
                " (mod " +
                formatBigInt(st.newMod) +
                ")</td>";
              html += "</tr>";
            });
            html += "</tbody></table></div>";
            html += "</div>";
          }

          html +=
            '<p class="mt-2 text-xs text-gray-500">Derivation uses the extended Euclidean algorithm to compute modular inverses and a generalized CRT that works even when the moduli are not pairwise coprime.</p>';
        } else {
          // Inconsistent system
          const c = solution.conflict;
          html +=
            '<p class="flex items-center gap-2 mb-2"><span class="font-semibold">System status:</span>';
          html +=
            '<span class="result-tag result-tag-error"><span class="w-1.5 h-1.5 rounded-full bg-current inline-block"></span><span>No solution – system is inconsistent</span></span></p>';

          html +=
            '<p class="text-sm text-gray-700 mb-2">The system becomes inconsistent when attempting to merge the following congruences:</p>';
          html += '<ul class="list-disc ml-5 text-sm text-gray-800">';
          html +=
            '<li>Current combined: <span class="font-mono">x ≡ ' +
            formatBigInt(c.aCur) +
            " (mod " +
            formatBigInt(c.nCur) +
            ")</span></li>";
          html +=
            '<li>New congruence: <span class="font-mono">x ≡ ' +
            formatBigInt(c.aNew) +
            " (mod " +
            formatBigInt(c.mNew) +
            ")</span></li>";
          html += "</ul>";

          html += '<p class="mt-2 text-sm text-gray-700">';
          html +=
            "Here gcd(" +
            formatBigInt(c.nCur) +
            ", " +
            formatBigInt(c.mNew) +
            ") = ";
          html +=
            '<span class="font-mono">' +
            formatBigInt(c.g) +
            "</span>, but the remainders do not match modulo this gcd, so no integer x can satisfy both congruences at once.";
          html += "</p>";

          html +=
            '<p class="mt-2 text-xs text-gray-500">To restore consistency, adjust the conflicting congruences so that their remainders agree modulo gcd(' +
            formatBigInt(c.nCur) +
            ", " +
            formatBigInt(c.mNew) +
            ").</p>";
        }

        html += "</div>";
        crtResult.innerHTML = html;
      }

      function calculateCrt() {
        const congruences = readCrtSystem();
        if (!congruences) return;
        const sol = crtSolve(congruences);
        renderCrtSolution(congruences, sol);
      }

      // Event wiring
      document.addEventListener("DOMContentLoaded", () => {
        buildCrtTable(crtCountInput.value || 3);
        resetCrtResult();
      });

      if (crtUpdateTableBtn) {
        crtUpdateTableBtn.addEventListener("click", () => {
          buildCrtTable(crtCountInput.value);
          resetCrtResult();
        });
      }

      if (crtExampleBtn) {
        crtExampleBtn.addEventListener("click", () => {
          loadCrtExample();
        });
      }

      if (crtCalcBtn) {
        crtCalcBtn.addEventListener("click", calculateCrt);
      }

      if (crtClearBtn) {
        crtClearBtn.addEventListener("click", () => {
          buildCrtTable(3);
          crtCountInput.value = 3;
          resetCrtResult();
        });
      }

      // FAQ toggle
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            if (!answer) return;
            const isHidden = answer.classList.contains("hidden");
            answer.classList.toggle("hidden", !isHidden);
            const icon = btn.querySelector("span:last-child");
            if (icon) icon.textContent = isHidden ? "−" : "+";
          });
        });
    </script>

