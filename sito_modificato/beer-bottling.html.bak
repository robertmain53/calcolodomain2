    <script>
      // Helper conversions
      function toFahrenheit(tempC) {
        return (tempC * 9) / 5 + 32;
      }

      function residualCO2Volumes(temp, unit) {
        let T_F = unit === "C" ? toFahrenheit(temp) : temp;
        // Empirical fit used by many homebrew calculators
        const v = 3.0378 - 0.050062 * T_F + 0.00026555 * T_F * T_F;
        return Math.max(0, v);
      }

      function litersFromVolume(value, unit) {
        if (!value || value <= 0) return 0;
        return unit === "gal" ? value * 3.78541 : value;
      }

      function litersFromBottleSize(size, unit) {
        if (!size || size <= 0) return 0;
        if (unit === "mL") return size / 1000;
        // fl oz to L
        return size * 0.0295735;
      }

      function formatNumber(x, decimals) {
        if (!isFinite(x)) return "–";
        return x.toFixed(decimals);
      }

      function updateStyleHint() {
        const preset = document.getElementById("stylePreset").value;
        const hintEl = document.getElementById("styleRangeHint");
        const targetInput = document.getElementById("targetCO2");

        let text = "";
        let defaultTarget = null;

        switch (preset) {
          case "british_ale":
            text = "Typical range: 1.5–1.9 vol for British ales.";
            defaultTarget = 1.7;
            break;
          case "american_ale":
            text = "Typical range: 2.2–2.6 vol for American ales.";
            defaultTarget = 2.4;
            break;
          case "belgian":
            text =
              "Typical range: 2.5–3.5 vol for Belgian strong ales and saisons.";
            defaultTarget = 3.0;
            break;
          case "wheat":
            text = "Typical range: 2.8–4.0 vol for wheat beers.";
            defaultTarget = 3.2;
            break;
          case "stout":
            text = "Typical range: 1.7–2.3 vol for stouts and porters.";
            defaultTarget = 2.0;
            break;
          case "lager":
            text = "Typical range: 2.4–2.8 vol for lagers and pilsners.";
            defaultTarget = 2.5;
            break;
          default:
            text = "Set your own target CO₂ level in volumes.";
        }

        hintEl.textContent = text;
        if (defaultTarget !== null) {
          targetInput.value = defaultTarget.toFixed(1);
        }
      }

      document
        .getElementById("stylePreset")
        .addEventListener("change", updateStyleHint);

      document
        .getElementById("calculateBtn")
        .addEventListener("click", function () {
          const batchVolume = parseFloat(
            document.getElementById("batchVolume").value
          );
          const batchUnit = document.getElementById("batchVolumeUnit").value;
          const beerTemp = parseFloat(
            document.getElementById("beerTemp").value
          );
          const beerTempUnit = document.getElementById("beerTempUnit").value;
          const targetCO2 = parseFloat(
            document.getElementById("targetCO2").value
          );
          const sugarType = document.getElementById("sugarType").value;

          const V_beer_L = litersFromVolume(batchVolume, batchUnit);
          if (V_beer_L <= 0 || !isFinite(V_beer_L)) {
            alert("Please enter a valid batch size.");
            return;
          }
          if (!isFinite(beerTemp)) {
            alert("Please enter a valid beer temperature.");
            return;
          }
          if (!isFinite(targetCO2) || targetCO2 <= 0) {
            alert("Please enter a valid target CO₂ level.");
            return;
          }

          const V_residual = residualCO2Volumes(beerTemp, beerTempUnit);
          const deltaV = Math.max(0, targetCO2 - V_residual);

          let k;
          let sugarLabel;
          switch (sugarType) {
            case "corn":
              k = 4.1;
              sugarLabel = "Corn sugar (dextrose)";
              break;
            case "dme":
              k = 6.5;
              sugarLabel = "DME (light dry malt extract)";
              break;
            default:
              k = 4.0;
              sugarLabel = "Table sugar (sucrose)";
          }

          const sugar_g = k * deltaV * V_beer_L;
          const sugar_oz = sugar_g / 28.3495;

          document.getElementById("sugarResult").textContent =
            sugar_g > 0
              ? `${formatNumber(sugar_g, 1)} g ${sugarLabel}`
              : "0 g (already at or above target CO₂)";
          document.getElementById("sugarResultAlt").textContent =
            sugar_g > 0
              ? `${formatNumber(sugar_oz, 2)} oz`
              : "No priming sugar recommended.";

          document.getElementById("residualCO2").textContent = `${formatNumber(
            V_residual,
            2
          )} vol`;
          document.getElementById("finalCO2").textContent = `${formatNumber(
            V_residual + deltaV,
            2
          )} vol`;

          const safetyNote = document.getElementById("co2SafetyNote");
          if (targetCO2 > 4.0) {
            safetyNote.textContent =
              "Warning: very high carbonation. Ensure bottles are rated for this pressure.";
            safetyNote.classList.remove("text-gray-500");
            safetyNote.classList.add("text-red-600");
          } else if (targetCO2 > 3.0) {
            safetyNote.textContent =
              "High carbonation – use strong bottles and check your numbers carefully.";
            safetyNote.classList.remove("text-gray-500");
            safetyNote.classList.add("text-amber-600");
          } else {
            safetyNote.textContent =
              "Within typical carbonation range for most beer styles.";
            safetyNote.classList.remove("text-red-600", "text-amber-600");
            safetyNote.classList.add("text-gray-500");
          }

          // Bottle planning
          const bottleInputs = [
            {
              size: parseFloat(document.getElementById("bottle1Size").value),
              unit: document.getElementById("bottle1Unit").value,
              maxCount: parseInt(
                document.getElementById("bottle1Count").value,
                10
              ),
              label: "Bottle type 1",
            },
            {
              size: parseFloat(document.getElementById("bottle2Size").value),
              unit: document.getElementById("bottle2Unit").value,
              maxCount: parseInt(
                document.getElementById("bottle2Count").value,
                10
              ),
              label: "Bottle type 2",
            },
            {
              size: parseFloat(document.getElementById("bottle3Size").value),
              unit: document.getElementById("bottle3Unit").value,
              maxCount: parseInt(
                document.getElementById("bottle3Count").value,
                10
              ),
              label: "Bottle type 3",
            },
          ];

          let remainingL = V_beer_L;
          const rows = [];

          bottleInputs.forEach((bottle, index) => {
            const sizeL = litersFromBottleSize(bottle.size, bottle.unit);
            const maxCount =
              isFinite(bottle.maxCount) && bottle.maxCount > 0
                ? bottle.maxCount
                : 0;

            if (sizeL <= 0 || maxCount === 0 || remainingL <= 0) {
              rows.push({
                label: bottle.label,
                sizeText:
                  bottle.size && isFinite(bottle.size)
                    ? `${formatNumber(bottle.size, 0)} ${bottle.unit}`
                    : "–",
                filled: 0,
                usedL: 0,
              });
              return;
            }

            const possibleCount = Math.floor(remainingL / sizeL);
            const filled = Math.min(possibleCount, maxCount);
            const usedL = filled * sizeL;
            remainingL -= usedL;

            rows.push({
              label: bottle.label,
              sizeText: `${formatNumber(bottle.size, 0)} ${bottle.unit}`,
              filled,
              usedL,
            });
          });

          const tbody = document.getElementById("bottleTableBody");
          tbody.innerHTML = "";
          rows.forEach((row) => {
            const tr = document.createElement("tr");
            tr.innerHTML = `
        <td class="px-3 py-2 border-b">${row.label}</td>
        <td class="px-3 py-2 border-b text-right">${row.sizeText}</td>
        <td class="px-3 py-2 border-b text-right">${row.filled}</td>
        <td class="px-3 py-2 border-b text-right">${
          row.usedL > 0 ? formatNumber(row.usedL, 2) + " L" : "0 L"
        }</td>
      `;
            tbody.appendChild(tr);
          });

          const leftoverEl = document.getElementById("leftoverVolume");
          leftoverEl.textContent = `Leftover volume: ${formatNumber(
            Math.max(0, remainingL),
            2
          )} L (${formatNumber(Math.max(0, remainingL) / 3.78541, 2)} US gal)`;
        });

      // Initialize style hint on load
      updateStyleHint();

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
