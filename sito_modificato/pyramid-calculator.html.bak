    <script>
      const baseTypeSelect = document.getElementById('base-type');
      const dimensionFields = document.getElementById('dimension-fields');
      const calcBtn = document.getElementById('calc-btn');
      const resetBtn = document.getElementById('reset-btn');
      const resultPanel = document.getElementById('result-panel');
      const unitSelect = document.getElementById('unit');
      const precisionSelect = document.getElementById('precision');

      const resVolume = document.getElementById('res-volume');
      const resBase = document.getElementById('res-base');
      const resLateral = document.getElementById('res-lateral');
      const resSurface = document.getElementById('res-surface');
      const resSlant = document.getElementById('res-slant');
      const resPerimeter = document.getElementById('res-perimeter');

      function renderFields(type) {
        if (type === 'square') {
          dimensionFields.innerHTML = `
            <div>
              <label for="base-a" class="block text-sm font-medium text-gray-700 mb-1">Base side (a)</label>
              <input type="number" id="base-a" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Vertical height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 10" min="0" step="any">
              <p class="text-xs text-gray-400 mt-1">Height is measured perpendicular from base to apex.</p>
            </div>
          `;
        } else {
          dimensionFields.innerHTML = `
            <div>
              <label for="base-a" class="block text-sm font-medium text-gray-700 mb-1">Base length (a)</label>
              <input type="number" id="base-a" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 6" min="0" step="any">
            </div>
            <div>
              <label for="base-b" class="block text-sm font-medium text-gray-700 mb-1">Base width (b)</label>
              <input type="number" id="base-b" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 4" min="0" step="any">
            </div>
            <div>
              <label for="height" class="block text-sm font-medium text-gray-700 mb-1">Vertical height (h)</label>
              <input type="number" id="height" class="w-full border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500" placeholder="e.g. 8" min="0" step="any">
            </div>
          `;
        }
      }

      baseTypeSelect.addEventListener('change', (e) => {
        renderFields(e.target.value);
        resultPanel.classList.add('hidden');
      });

      function calculatePyramid() {
        const type = baseTypeSelect.value;
        const unit = unitSelect.value;
        const prec = parseInt(precisionSelect.value, 10);

        if (type === 'square') {
          const a = parseFloat(document.getElementById('base-a')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          if (isNaN(a) || isNaN(h) || a <= 0 || h <= 0) return null;

          const baseArea = a * a;
          const volume = (1/3) * baseArea * h;
          const slant = Math.sqrt(Math.pow(a / 2, 2) + Math.pow(h, 2));
          const lateral = 2 * a * slant;
          const surface = baseArea + lateral;
          const perimeter = 4 * a;

          return { volume, baseArea, lateral, surface, slant, perimeter, unit, prec };
        } else {
          const a = parseFloat(document.getElementById('base-a')?.value);
          const b = parseFloat(document.getElementById('base-b')?.value);
          const h = parseFloat(document.getElementById('height')?.value);
          if ([a, b, h].some(v => isNaN(v) || v <= 0)) return null;

          const baseArea = a * b;
          const volume = (1/3) * baseArea * h;

          const slantA = Math.sqrt(Math.pow(b / 2, 2) + Math.pow(h, 2));
          const slantB = Math.sqrt(Math.pow(a / 2, 2) + Math.pow(h, 2));

          const lateral = a * slantA + b * slantB;
          const surface = baseArea + lateral;
          const perimeter = 2 * (a + b);

          return { volume, baseArea, lateral, surface, slant: null, slantA, slantB, perimeter, unit, prec, isRect: true };
        }
      }

      calcBtn.addEventListener('click', () => {
        const res = calculatePyramid();
        const unit = unitSelect.value;
        if (!res) {
          resultPanel.classList.remove('hidden');
          resVolume.textContent = 'Please enter valid positive numbers.';
          resBase.textContent = '';
          resLateral.textContent = '';
          resSurface.textContent = '';
          resSlant.textContent = '';
          resPerimeter.textContent = '';
          return;
        }

        resultPanel.classList.remove('hidden');

        resVolume.textContent = `${res.volume.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}³`;
        resBase.textContent = `${res.baseArea.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}²`;
        resLateral.textContent = `${res.lateral.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}²`;
        resSurface.textContent = `${res.surface.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}²`;
        resPerimeter.textContent = `${res.perimeter.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}`;

        if (res.isRect) {
          resSlant.textContent = `ℓa = ${res.slantA.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}, ℓb = ${res.slantB.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}`;
        } else {
          resSlant.textContent = `${res.slant.toLocaleString(undefined, { maximumFractionDigits: res.prec })} ${unit}`;
        }
      });

      resetBtn.addEventListener('click', () => {
        baseTypeSelect.value = 'square';
        unitSelect.value = 'm';
        precisionSelect.value = '2';
        renderFields('square');
        resultPanel.classList.add('hidden');
      });

      // init
      renderFields('square');

      // FAQ fallback toggle
      document.querySelectorAll('[data-faq-btn]').forEach(btn => {
        btn.addEventListener('click', () => {
          const panel = btn.parentElement.querySelector('[data-faq-panel]');
          panel.classList.toggle('hidden');
        });
      });
    </script>

