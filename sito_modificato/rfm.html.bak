    <script>
      // Unit toggle
      const unitMetricBtn = document.getElementById("unit-metric");
      const unitImperialBtn = document.getElementById("unit-imperial");
      const metricInputs = document.getElementById("metric-inputs");
      const imperialInputs = document.getElementById("imperial-inputs");

      function setUnitSystem(system) {
        if (system === "metric") {
          unitMetricBtn.classList.add("bg-blue-600", "text-white");
          unitMetricBtn.classList.remove("bg-white", "text-gray-700");
          unitImperialBtn.classList.remove("bg-blue-600", "text-white");
          unitImperialBtn.classList.add("bg-white", "text-gray-700");
          metricInputs.classList.remove("hidden");
          imperialInputs.classList.add("hidden");
        } else {
          unitImperialBtn.classList.add("bg-blue-600", "text-white");
          unitImperialBtn.classList.remove("bg-white", "text-gray-700");
          unitMetricBtn.classList.remove("bg-blue-600", "text-white");
          unitMetricBtn.classList.add("bg-white", "text-gray-700");
          metricInputs.classList.add("hidden");
          imperialInputs.classList.remove("hidden");
        }
      }

      unitMetricBtn.addEventListener("click", () => setUnitSystem("metric"));
      unitImperialBtn.addEventListener("click", () =>
        setUnitSystem("imperial")
      );

      // Calculator logic
      const calcBtn = document.getElementById("calculate-btn");
      const resetBtn = document.getElementById("reset-btn");
      const errorMessage = document.getElementById("error-message");
      const resultsContainer = document.getElementById("results-container");
      const rfmValueEl = document.getElementById("rfm-value");
      const rfmCategoryEl = document.getElementById("rfm-category");
      const rfmInterpretationEl = document.getElementById("rfm-interpretation");
      const rfmBarEl = document.getElementById("rfm-bar");

      function getSelectedSex() {
        const radios = document.querySelectorAll('input[name="sex"]');
        for (const r of radios) {
          if (r.checked) return r.value;
        }
        return "male";
      }

      function convertImperialHeightToCm(ft, inch) {
        if (isNaN(ft)) ft = 0;
        if (isNaN(inch)) inch = 0;
        const totalInches = ft * 12 + inch;
        return totalInches * 2.54;
      }

      function convertInchesToCm(inch) {
        if (isNaN(inch)) inch = 0;
        return inch * 2.54;
      }

      function classifyRFM(sex, rfm) {
        let category = "Unknown";
        let explanation = "";
        let barPercent = 0;

        if (sex === "male") {
          if (rfm < 8) {
            category = "Low / very lean";
            explanation =
              "Your estimated body fat is very low. This is typical of competitive athletes but may be too low for long‑term health in some men.";
            barPercent = 10;
          } else if (rfm < 20) {
            category = "Healthy range";
            explanation =
              "Your RFM falls in a commonly accepted healthy range for men. Continue to support your health with balanced nutrition and regular activity.";
            barPercent = 35;
          } else if (rfm < 25) {
            category = "High";
            explanation =
              "Your RFM is above the typical healthy range for men. You may benefit from lifestyle changes and discussing your risk factors with a health professional.";
            barPercent = 65;
          } else {
            category = "Very high";
            explanation =
              "Your RFM is in the obesity range for men. Consider consulting a doctor or dietitian to evaluate your overall health and plan safe changes.";
            barPercent = 90;
          }
        } else {
          if (rfm < 18) {
            category = "Low / very lean";
            explanation =
              "Your estimated body fat is very low. This is typical of athletes but may affect hormones, menstrual cycles, and bone health in some women.";
            barPercent = 10;
          } else if (rfm < 30) {
            category = "Healthy range";
            explanation =
              "Your RFM falls in a commonly accepted healthy range for women. Maintain your health with balanced eating and regular movement.";
            barPercent = 35;
          } else if (rfm < 35) {
            category = "High";
            explanation =
              "Your RFM is above the typical healthy range for women. You may benefit from lifestyle changes and discussing your risk factors with a health professional.";
            barPercent = 65;
          } else {
            category = "Very high";
            explanation =
              "Your RFM is in the obesity range for women. Consider consulting a doctor or dietitian to evaluate your overall health and plan safe changes.";
            barPercent = 90;
          }
        }

        return { category, explanation, barPercent };
      }

      calcBtn.addEventListener("click", () => {
        errorMessage.textContent = "";
        let heightCm, waistCm;

        const usingMetric = !metricInputs.classList.contains("hidden");

        if (usingMetric) {
          const h = parseFloat(document.getElementById("height-cm").value);
          const w = parseFloat(document.getElementById("waist-cm").value);
          if (!h || !w || h <= 0 || w <= 0) {
            errorMessage.textContent =
              "Please enter valid height and waist measurements.";
            resultsContainer.classList.add("hidden");
            return;
          }
          heightCm = h;
          waistCm = w;
        } else {
          const ft = parseFloat(document.getElementById("height-ft").value);
          const inch = parseFloat(document.getElementById("height-in").value);
          const wIn = parseFloat(document.getElementById("waist-in").value);
          if (
            (!ft && ft !== 0) ||
            isNaN(ft) ||
            isNaN(inch) ||
            !wIn ||
            wIn <= 0
          ) {
            errorMessage.textContent =
              "Please enter valid height (feet and inches) and waist in inches.";
            resultsContainer.classList.add("hidden");
            return;
          }
          heightCm = convertImperialHeightToCm(ft, inch || 0);
          waistCm = convertInchesToCm(wIn);
        }

        if (waistCm <= 0 || heightCm <= 0) {
          errorMessage.textContent = "Measurements must be greater than zero.";
          resultsContainer.classList.add("hidden");
          return;
        }

        const sex = getSelectedSex();
        const ratio = heightCm / waistCm;
        let rfm;
        if (sex === "male") {
          rfm = 64 - 20 * ratio;
        } else {
          rfm = 76 - 20 * ratio;
        }

        if (!isFinite(rfm)) {
          errorMessage.textContent =
            "Unable to calculate RFM with the given values.";
          resultsContainer.classList.add("hidden");
          return;
        }

        const rfmRounded = Math.round(rfm * 10) / 10;
        const { category, explanation, barPercent } = classifyRFM(
          sex,
          rfmRounded
        );

        rfmValueEl.textContent = rfmRounded.toFixed(1) + " %";
        rfmCategoryEl.textContent = category;
        rfmInterpretationEl.textContent = explanation;
        rfmBarEl.style.width = Math.min(Math.max(barPercent, 0), 100) + "%";

        resultsContainer.classList.remove("hidden");
      });

      resetBtn.addEventListener("click", () => {
        document.getElementById("height-cm").value = "";
        document.getElementById("waist-cm").value = "";
        document.getElementById("height-ft").value = "";
        document.getElementById("height-in").value = "";
        document.getElementById("waist-in").value = "";
        errorMessage.textContent = "";
        resultsContainer.classList.add("hidden");
        rfmBarEl.style.width = "0%";
        rfmValueEl.textContent = "– %";
        rfmCategoryEl.textContent = "–";
        rfmInterpretationEl.textContent =
          "Enter your data and click “Calculate RFM” to see an interpretation.";
      });

      // Simple FAQ toggle (in addition to global script_faq, safe if both run)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const answer = btn.parentElement.querySelector(".faq-answer");
            const symbol = btn.querySelector("span:last-child");
            const isHidden = answer.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((s) => (s.textContent = "+"));
            if (isHidden) {
              answer.classList.remove("hidden");
              symbol.textContent = "−";
            }
          });
        });
    </script>

