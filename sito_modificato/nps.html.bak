    <script>
      // Tab switching
      document.querySelectorAll(".nps-tab").forEach((btn) => {
        btn.addEventListener("click", () => {
          const target = btn.getAttribute("data-tab");
          document.querySelectorAll(".nps-tab").forEach((b) => {
            b.classList.remove("border-blue-600", "text-blue-600");
            b.classList.add("border-transparent", "text-gray-600");
          });
          btn.classList.add("border-blue-600", "text-blue-600");
          btn.classList.remove("border-transparent", "text-gray-600");

          document.querySelectorAll(".nps-tab-panel").forEach((panel) => {
            panel.classList.add("hidden");
          });
          document.getElementById(target).classList.remove("hidden");
        });
      });

      function parseNonNegative(id) {
        const el = document.getElementById(id);
        if (!el) return 0;
        const v = parseFloat(el.value);
        return isNaN(v) || v < 0 ? 0 : v;
      }

      function zFromConfidence(conf) {
        const c = parseFloat(conf);
        if (c >= 0.995) return 2.81;
        if (c >= 0.99) return 2.576;
        if (c >= 0.95) return 1.96;
        if (c >= 0.9) return 1.645;
        return 1.96;
      }

      function npsStats(P, Pa, D, confLevel) {
        const N = P + Pa + D;
        if (N <= 0) return null;
        const pProm = P / N;
        const pDetr = D / N;
        const nps = (pProm - pDetr) * 100;
        const z = zFromConfidence(confLevel || 0.95);
        // Approx variance for difference of two proportions
        const varDiff = (pProm * (1 - pProm) + pDetr * (1 - pDetr)) / N;
        const se = Math.sqrt(varDiff) * 100;
        const margin = z * se;
        return {
          N,
          pProm,
          pDetr,
          nps,
          lower: nps - margin,
          upper: nps + margin,
        };
      }

      function formatNps(value) {
        if (!isFinite(value)) return "0";
        const rounded = Math.round(value);
        return (rounded > 0 ? "+" : "") + rounded;
      }

      function formatPct(value) {
        if (!isFinite(value)) return "0%";
        return (value * 100).toFixed(1).replace(/\.0$/, "") + "%";
      }

      function interpretNps(nps) {
        if (!isFinite(nps)) return "Not enough data to interpret.";
        if (nps < 0)
          return "Warning – you have more Detractors than Promoters. Investigate root causes urgently.";
        if (nps < 30)
          return "OK – more Promoters than Detractors, but there is clear room for improvement.";
        if (nps < 50)
          return "Good – customers are generally loyal and willing to recommend you.";
        if (nps < 70)
          return "Excellent – you have strong advocacy and positive word of mouth.";
        return "World‑class – extremely high customer advocacy. Focus on maintaining this level while scaling.";
      }

      // Basic NPS tab
      function updateBasic() {
        const P = parseNonNegative("basic-promoters");
        const Pa = parseNonNegative("basic-passives");
        const D = parseNonNegative("basic-detractors");
        const conf = document.getElementById("basic-confidence").value;
        const stats = npsStats(P, Pa, D, conf);
        const npsEl = document.getElementById("basic-nps");
        const ciEl = document.getElementById("basic-nps-interval");
        const totalEl = document.getElementById("basic-total");
        const pPromEl = document.getElementById("basic-promoters-pct");
        const pDetrEl = document.getElementById("basic-detractors-pct");
        const interpEl = document.getElementById("basic-interpretation");
        const barP = document.getElementById("basic-bar-promoters");
        const barPa = document.getElementById("basic-bar-passives");
        const barD = document.getElementById("basic-bar-detractors");

        if (!stats) {
          npsEl.textContent = "0";
          ciEl.textContent = "Not enough responses.";
          totalEl.textContent = "0";
          pPromEl.textContent = "0%";
          pDetrEl.textContent = "0%";
          interpEl.textContent = "Add some responses to see your NPS.";
          barP.style.width = "0%";
          barPa.style.width = "0%";
          barD.style.width = "0%";
          return;
        }

        const N = stats.N;
        const pProm = stats.pProm;
        const pDetr = stats.pDetr;
        const pPass = N > 0 ? 1 - pProm - pDetr : 0;

        npsEl.textContent = formatNps(stats.nps);
        const confPct = Math.round(parseFloat(conf) * 100);
        ciEl.textContent =
          confPct +
          "% CI: " +
          formatNps(stats.lower) +
          " to " +
          formatNps(stats.upper);
        totalEl.textContent = N.toString();
        pPromEl.textContent = formatPct(pProm);
        pDetrEl.textContent = formatPct(pDetr);
        interpEl.textContent = interpretNps(stats.nps);

        barP.style.width = (pProm * 100).toFixed(1) + "%";
        barPa.style.width = (pPass * 100).toFixed(1) + "%";
        barD.style.width = (pDetr * 100).toFixed(1) + "%";
      }

      document
        .getElementById("basic-calc-btn")
        .addEventListener("click", updateBasic);
      [
        "basic-promoters",
        "basic-passives",
        "basic-detractors",
        "basic-confidence",
      ].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateBasic);
      });

      // Distribution tab
      function updateDistribution() {
        let P = 0,
          Pa = 0,
          D = 0,
          total = 0;
        for (let s = 0; s <= 10; s++) {
          const count = parseNonNegative("score-" + s);
          total += count;
          if (s <= 6) D += count;
          else if (s <= 8) Pa += count;
          else P += count;
        }
        const stats = npsStats(P, Pa, D, 0.95);
        const npsEl = document.getElementById("dist-nps");
        const summaryEl = document.getElementById("dist-summary");
        const pPromEl = document.getElementById("dist-promoters-pct");
        const pPassEl = document.getElementById("dist-passives-pct");
        const pDetrEl = document.getElementById("dist-detractors-pct");

        if (!stats) {
          npsEl.textContent = "0";
          summaryEl.textContent = "Not enough responses.";
          pPromEl.textContent = "0%";
          pPassEl.textContent = "0%";
          pDetrEl.textContent = "0%";
          return;
        }

        const pProm = stats.pProm;
        const pDetr = stats.pDetr;
        const pPass = total > 0 ? 1 - pProm - pDetr : 0;

        npsEl.textContent = formatNps(stats.nps);
        summaryEl.textContent =
          "Promoters: " +
          P +
          " • Passives: " +
          Pa +
          " • Detractors: " +
          D +
          " • Total: " +
          total;
        pPromEl.textContent = formatPct(pProm);
        pPassEl.textContent = formatPct(pPass);
        pDetrEl.textContent = formatPct(pDetr);
      }

      document
        .getElementById("dist-calc-btn")
        .addEventListener("click", updateDistribution);
      for (let s = 0; s <= 10; s++) {
        const el = document.getElementById("score-" + s);
        if (el) el.addEventListener("input", updateDistribution);
      }

      // Compare segments tab
      function updateCompare() {
        const Pa = parseNonNegative("a-promoters");
        const Ppa = parseNonNegative("a-passives");
        const Da = parseNonNegative("a-detractors");
        const Pb = parseNonNegative("b-promoters");
        const Ppb = parseNonNegative("b-passives");
        const Db = parseNonNegative("b-detractors");
        const conf = document.getElementById("compare-confidence").value;

        const statsA = npsStats(Pa, Ppa, Da, conf);
        const statsB = npsStats(Pb, Ppb, Db, conf);

        const aNpsEl = document.getElementById("compare-a-nps");
        const bNpsEl = document.getElementById("compare-b-nps");
        const aCiEl = document.getElementById("compare-a-ci");
        const bCiEl = document.getElementById("compare-b-ci");
        const diffEl = document.getElementById("compare-diff");
        const sigEl = document.getElementById("compare-significance");

        if (!statsA || !statsB) {
          aNpsEl.textContent = "0";
          bNpsEl.textContent = "0";
          aCiEl.textContent = "Not enough data.";
          bCiEl.textContent = "Not enough data.";
          diffEl.textContent = "0 points";
          sigEl.textContent =
            "Add more responses in both segments to compare them reliably.";
          return;
        }

        const confPct = Math.round(parseFloat(conf) * 100);
        aNpsEl.textContent = formatNps(statsA.nps);
        bNpsEl.textContent = formatNps(statsB.nps);
        aCiEl.textContent =
          confPct +
          "% CI: " +
          formatNps(statsA.lower) +
          " to " +
          formatNps(statsA.upper);
        bCiEl.textContent =
          confPct +
          "% CI: " +
          formatNps(statsB.lower) +
          " to " +
          formatNps(statsB.upper);

        const diff = statsA.nps - statsB.nps;
        diffEl.textContent =
          (diff > 0 ? "+" : "") + Math.round(diff) + " points";

        // Simple overlap heuristic
        const overlap = !(
          statsA.lower > statsB.upper || statsB.lower > statsA.upper
        );
        if (!overlap && Math.abs(diff) >= 5) {
          sigEl.textContent =
            "The confidence intervals do not overlap – the difference is likely statistically meaningful.";
        } else if (Math.abs(diff) < 5) {
          sigEl.textContent =
            "The difference is small. It may not be practically meaningful even if statistically significant.";
        } else {
          sigEl.textContent =
            "The confidence intervals overlap. Treat the difference with caution – it may be due to sampling noise.";
        }
      }

      document
        .getElementById("compare-calc-btn")
        .addEventListener("click", updateCompare);
      [
        "a-promoters",
        "a-passives",
        "a-detractors",
        "b-promoters",
        "b-passives",
        "b-detractors",
        "compare-confidence",
      ].forEach((id) => {
        const el = document.getElementById(id);
        if (el) el.addEventListener("input", updateCompare);
      });

      // Sample size tab
      function updateSampleSize() {
        const conf = parseFloat(document.getElementById("ss-confidence").value);
        const marginPoints = parseFloat(
          document.getElementById("ss-margin").value
        );
        const pop = parseFloat(document.getElementById("ss-population").value);
        const variance = parseFloat(
          document.getElementById("ss-variance").value
        );

        const z = zFromConfidence(conf);
        const E = marginPoints > 0 ? marginPoints / 100 : 0.05;
        const pVar = isNaN(variance) || variance <= 0 ? 0.25 : variance;

        let n0 = (z * z * pVar) / (E * E);
        if (!isFinite(n0) || n0 <= 0) n0 = 0;

        let nAdj = n0;
        if (!isNaN(pop) && pop > 0) {
          nAdj = n0 / (1 + (n0 - 1) / pop);
        }

        const resultEl = document.getElementById("ss-result");
        const detailEl = document.getElementById("ss-result-detail");
        const noteEl = document.getElementById("ss-note");

        if (nAdj <= 0) {
          resultEl.textContent = "—";
          detailEl.textContent =
            "Enter a valid margin of error and confidence level.";
          return;
        }

        const rounded = Math.ceil(nAdj);
        resultEl.textContent = "~" + rounded.toLocaleString();
        detailEl.textContent =
          "For ±" +
          marginPoints +
          " NPS points at " +
          Math.round(conf * 100) +
          "% confidence.";
        noteEl.textContent =
          "This is an approximation using a binomial model for Promoters vs. Detractors with variance " +
          pVar.toFixed(2) +
          ". Treat it as a planning guideline, not an exact requirement.";
      }

      document
        .getElementById("ss-calc-btn")
        .addEventListener("click", updateSampleSize);
      ["ss-confidence", "ss-margin", "ss-population", "ss-variance"].forEach(
        (id) => {
          const el = document.getElementById(id);
          if (el) el.addEventListener("input", updateSampleSize);
        }
      );

      // Initial calculations
      updateBasic();
      updateDistribution();
      updateCompare();
      updateSampleSize();
    </script>

