    <script>
      // Utility functions
      function parseNumber(id) {
        const el = document.getElementById(id);
        const v = parseFloat(el.value.replace(/,/g, ""));
        return isNaN(v) ? 0 : v;
      }
      function formatCurrency(num) {
        if (!isFinite(num)) return "₹ 0";
        const abs = Math.abs(num);
        let suffix = "";
        let value = num;
        if (abs >= 1e7) {
          value = num / 1e7;
          suffix = " Cr";
        } else if (abs >= 1e5) {
          value = num / 1e5;
          suffix = " Lakh";
        }
        return (
          "₹ " +
          value.toLocaleString("en-IN", { maximumFractionDigits: 2 }) +
          suffix
        );
      }

      // SIP calculations
      function calcFutureValueSIP(P, annualRate, years, frequency) {
        const m =
          frequency === "monthly" ? 12 : frequency === "quarterly" ? 4 : 1;
        const r = annualRate / 100 / m;
        const n = years * m;
        if (r === 0) {
          return { fv: P * n, invested: P * n, n, m };
        }
        const factor = (Math.pow(1 + r, n) - 1) / r;
        const fv = P * factor * (1 + r); // payment at beginning
        const invested = P * n;
        return { fv, invested, n, m };
      }

      function calcRequiredSIPForGoal(FV, annualRate, years, frequency) {
        const m =
          frequency === "monthly" ? 12 : frequency === "quarterly" ? 4 : 1;
        const r = annualRate / 100 / m;
        const n = years * m;
        if (r === 0 || n === 0) return { P: FV / n || 0, n, m };
        const denom = ((Math.pow(1 + r, n) - 1) / r) * (1 + r);
        const P = FV / denom;
        return { P, n, m };
      }

      function calcStepUpSIP(P0, annualRate, years, stepPercent) {
        const m = 12;
        const r = annualRate / 100 / m;
        const totalMonths = years * m;
        let corpus = 0;
        let invested = 0;
        let currentP = P0;
        const yearlyData = [];
        let yearInvested = 0;
        let yearStartCorpus = 0;

        for (let month = 1; month <= totalMonths; month++) {
          corpus = corpus * (1 + r) + currentP;
          invested += currentP;
          yearInvested += currentP;

          if (month % 12 === 0 || month === totalMonths) {
            const year = Math.ceil(month / 12);
            const yearEndCorpus = corpus;
            const gain = yearEndCorpus - yearStartCorpus - yearInvested;
            yearlyData.push({
              year,
              invested: yearInvested,
              gain: gain,
              value: yearEndCorpus,
            });
            yearInvested = 0;
            yearStartCorpus = yearEndCorpus;
            currentP *= 1 + stepPercent / 100;
          }
        }
        return { fv: corpus, invested, yearlyData };
      }

      // Chart
      let sipChart;
      function renderChart(labels, investedSeries, valueSeries) {
        const ctx = document.getElementById("sipChart").getContext("2d");
        if (sipChart) sipChart.destroy();
        sipChart = new Chart(ctx, {
          type: "line",
          data: {
            labels,
            datasets: [
              {
                label: "Total invested",
                data: investedSeries,
                borderColor: "#3b82f6",
                backgroundColor: "rgba(59,130,246,0.1)",
                tension: 0.2,
              },
              {
                label: "Portfolio value",
                data: valueSeries,
                borderColor: "#10b981",
                backgroundColor: "rgba(16,185,129,0.1)",
                tension: 0.2,
              },
            ],
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: { mode: "index", intersect: false },
            plugins: {
              legend: { display: true },
              tooltip: {
                callbacks: {
                  label: function (ctx) {
                    return (
                      ctx.dataset.label + ": " + formatCurrency(ctx.parsed.y)
                    );
                  },
                },
              },
            },
            scales: {
              y: {
                ticks: {
                  callback: function (value) {
                    return "₹ " + (value / 100000).toFixed(1) + "L";
                  },
                },
              },
            },
          },
        });
      }

      function buildYearlyScheduleFromFV(P, annualRate, years, frequency) {
        const m =
          frequency === "monthly" ? 12 : frequency === "quarterly" ? 4 : 1;
        const r = annualRate / 100 / m;
        const totalPeriods = years * m;
        const perYear = m;
        const schedule = [];
        let corpus = 0;
        let investedTotal = 0;
        let yearStartCorpus = 0;
        let yearInvested = 0;

        for (let i = 1; i <= totalPeriods; i++) {
          corpus = corpus * (1 + r) + P;
          investedTotal += P;
          yearInvested += P;

          if (i % perYear === 0 || i === totalPeriods) {
            const year = Math.ceil(i / perYear);
            const yearEndCorpus = corpus;
            const gain = yearEndCorpus - yearStartCorpus - yearInvested;
            schedule.push({
              year,
              invested: yearInvested,
              gain,
              value: yearEndCorpus,
            });
            yearStartCorpus = yearEndCorpus;
            yearInvested = 0;
          }
        }
        return schedule;
      }

      function updateScheduleTable(schedule) {
        const tbody = document.getElementById("scheduleBody");
        tbody.innerHTML = "";
        if (!schedule || schedule.length === 0) {
          tbody.innerHTML =
            '<tr><td colspan="4" class="px-3 py-4 text-center text-gray-500">No data.</td></tr>';
          return;
        }
        schedule.forEach((row) => {
          const tr = document.createElement("tr");
          tr.innerHTML = `
        <td class="px-3 py-2 text-left">${row.year}</td>
        <td class="px-3 py-2 text-right">${row.invested.toLocaleString(
          "en-IN",
          { maximumFractionDigits: 0 }
        )}</td>
        <td class="px-3 py-2 text-right">${row.gain.toLocaleString("en-IN", {
          maximumFractionDigits: 0,
        })}</td>
        <td class="px-3 py-2 text-right">${row.value.toLocaleString("en-IN", {
          maximumFractionDigits: 0,
        })}</td>
      `;
          tbody.appendChild(tr);
        });
      }

      function downloadCSV(schedule) {
        if (!schedule || schedule.length === 0) return;
        let csv = "Year,Total Invested,Wealth Gained,Year-end Value\n";
        schedule.forEach((r) => {
          csv += `${r.year},${r.invested.toFixed(2)},${r.gain.toFixed(
            2
          )},${r.value.toFixed(2)}\n`;
        });
        const blob = new Blob([csv], { type: "text/csv;charset=utf-8;" });
        const url = URL.createObjectURL(blob);
        const a = document.createElement("a");
        a.href = url;
        a.download = "sip-schedule.csv";
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
      }

      // Tab handling
      const tabAmount = document.getElementById("tab-amount");
      const tabGoal = document.getElementById("tab-goal");
      const tabStep = document.getElementById("tab-stepup");
      const panelAmount = document.getElementById("panel-amount");
      const panelGoal = document.getElementById("panel-goal");
      const panelStep = document.getElementById("panel-stepup");

      function setActiveTab(tab) {
        [tabAmount, tabGoal, tabStep].forEach((t) =>
          t.classList.remove("tab-active")
        );
        [panelAmount, panelGoal, panelStep].forEach((p) =>
          p.classList.add("hidden")
        );
        if (tab === "amount") {
          tabAmount.classList.add("tab-active");
          panelAmount.classList.remove("hidden");
        } else if (tab === "goal") {
          tabGoal.classList.add("tab-active");
          panelGoal.classList.remove("hidden");
        } else {
          tabStep.classList.add("tab-active");
          panelStep.classList.remove("hidden");
        }
      }

      tabAmount.addEventListener("click", () => setActiveTab("amount"));
      tabGoal.addEventListener("click", () => setActiveTab("goal"));
      tabStep.addEventListener("click", () => setActiveTab("step"));

      // Main calculate
      document.getElementById("calculateBtn").addEventListener("click", () => {
        const active = tabAmount.classList.contains("tab-active")
          ? "amount"
          : tabGoal.classList.contains("tab-active")
          ? "goal"
          : "step";

        let invested = 0,
          fv = 0,
          schedule = [],
          labels = [],
          investedSeries = [],
          valueSeries = [];
        const showYearly = document.getElementById("showYearlyTable").checked;

        if (active === "amount") {
          const P = parseNumber("sipAmount");
          const years = parseNumber("sipYears");
          const rate = parseNumber("sipRate");
          const freq = document.getElementById("sipFrequency").value;
          const res = calcFutureValueSIP(P, rate, years, freq);
          invested = res.invested;
          fv = res.fv;
          schedule = buildYearlyScheduleFromFV(P, rate, years, freq);
          labels = schedule.map((r) => "Year " + r.year);
          investedSeries = schedule.map(
            (r) =>
              r.invested +
              (investedSeries.length
                ? investedSeries[investedSeries.length - 1]
                : 0)
          );
          let runningValue = 0;
          valueSeries = schedule.map((r) => {
            runningValue = r.value;
            return runningValue;
          });
        } else if (active === "goal") {
          const FV = parseNumber("goalAmount");
          const years = parseNumber("goalYears");
          const rate = parseNumber("goalRate");
          const freq = document.getElementById("goalFrequency").value;
          const res = calcRequiredSIPForGoal(FV, rate, years, freq);
          const P = res.P;
          const fvRes = calcFutureValueSIP(P, rate, years, freq);
          invested = fvRes.invested;
          fv = fvRes.fv;
          schedule = buildYearlyScheduleFromFV(P, rate, years, freq);
          labels = schedule.map((r) => "Year " + r.year);
          investedSeries = schedule.map(
            (r) =>
              r.invested +
              (investedSeries.length
                ? investedSeries[investedSeries.length - 1]
                : 0)
          );
          let runningValue = 0;
          valueSeries = schedule.map((r) => {
            runningValue = r.value;
            return runningValue;
          });
          // Update required SIP field display
          document.getElementById("resultSummary").dataset.requiredSip = P;
        } else {
          const P0 = parseNumber("stepSipAmount");
          const years = parseNumber("stepSipYears");
          const rate = parseNumber("stepSipRate");
          const step = parseNumber("stepSipIncrease");
          const res = calcStepUpSIP(P0, rate, years, step);
          invested = res.invested;
          fv = res.fv;
          schedule = res.yearlyData;
          labels = schedule.map((r) => "Year " + r.year);
          let cumInvested = 0;
          investedSeries = schedule.map((r) => {
            cumInvested += r.invested;
            return cumInvested;
          });
          valueSeries = schedule.map((r) => r.value);
        }

        // Update summary cards
        const gain = fv - invested;
        document.getElementById("resultInvested").textContent =
          formatCurrency(invested);
        document.getElementById("resultMaturity").textContent =
          formatCurrency(fv);
        document.getElementById("resultGain").textContent =
          formatCurrency(gain);

        // Summary text
        const years =
          active === "amount"
            ? parseNumber("sipYears")
            : active === "goal"
            ? parseNumber("goalYears")
            : parseNumber("stepSipYears");
        let summary = "";
        if (active === "amount") {
          const P = parseNumber("sipAmount");
          summary = `Investing ${formatCurrency(P)} every ${
            document.getElementById("sipFrequency").value
          } for ${years} years could grow to approximately ${formatCurrency(
            fv
          )}, assuming a constant return of ${parseNumber("sipRate").toFixed(
            2
          )}% p.a.`;
        } else if (active === "goal") {
          const requiredP =
            document.getElementById("resultSummary").dataset.requiredSip || 0;
          summary = `To reach a goal of ${formatCurrency(
            parseNumber("goalAmount")
          )} in ${years} years at an expected return of ${parseNumber(
            "goalRate"
          ).toFixed(2)}% p.a., you need to invest about ${formatCurrency(
            requiredP
          )} every ${document.getElementById("goalFrequency").value}.`;
        } else {
          summary = `Starting with a monthly SIP of ${formatCurrency(
            parseNumber("stepSipAmount")
          )} and increasing it by ${parseNumber("stepSipIncrease").toFixed(
            0
          )}% every year for ${years} years could grow to approximately ${formatCurrency(
            fv
          )} at ${parseNumber("stepSipRate").toFixed(2)}% p.a.`;
        }
        document.getElementById("resultSummary").textContent = summary;

        // Update table & chart
        if (showYearly) {
          updateScheduleTable(schedule);
        } else {
          updateScheduleTable([]);
        }
        renderChart(labels, investedSeries, valueSeries);

        // Attach schedule to button for CSV
        document.getElementById("downloadCsvBtn").dataset.schedule =
          JSON.stringify(schedule);
      });

      document
        .getElementById("downloadCsvBtn")
        .addEventListener("click", () => {
          const data =
            document.getElementById("downloadCsvBtn").dataset.schedule;
          if (!data) return;
          const schedule = JSON.parse(data);
          downloadCSV(schedule);
        });

      // FAQ toggle (simple, in addition to global script_faq)
      document
        .querySelectorAll("#faq-container .faq-question")
        .forEach((btn) => {
          btn.addEventListener("click", () => {
            const ans = btn.parentElement.querySelector(".faq-answer");
            const icon = btn.querySelector("span:last-child");
            const isHidden = ans.classList.contains("hidden");
            document
              .querySelectorAll("#faq-container .faq-answer")
              .forEach((a) => a.classList.add("hidden"));
            document
              .querySelectorAll("#faq-container .faq-question span:last-child")
              .forEach((i) => (i.textContent = "+"));
            if (isHidden) {
              ans.classList.remove("hidden");
              icon.textContent = "−";
            }
          });
        });

      // Initial auto-calc
      window.addEventListener("load", () => {
        document.getElementById("calculateBtn").click();
      });
    </script>

