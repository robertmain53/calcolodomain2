    <script>
      // Physical constants
      const C = 2.99792458e8; // speed of light (m/s)
      const EV_TO_J = 1.602176634e-19; // J per eV
      const J_TO_EV = 1 / EV_TO_J;
      const EV_C2_TO_KG = 1.78266192e-36; // kg per eV/c^2

      // Particle masses (kg)
      const ELECTRON_MASS = 9.1093837015e-31;
      const PROTON_MASS = 1.67262192369e-27;

      function formatSci(value, digits = 3) {
        if (!isFinite(value) || isNaN(value)) return "—";
        if (value === 0) return "0";
        const abs = Math.abs(value);
        if (abs >= 1e-3 && abs < 1e4) {
          return value.toFixed(digits);
        }
        const exp = Math.floor(Math.log10(abs));
        const mant = value / Math.pow(10, exp);
        return mant.toFixed(digits) + "×10^" + exp;
      }

      function updateVelocityFromBeta() {
        const betaInput = document.getElementById("beta-input");
        const betaSlider = document.getElementById("beta-slider");
        let beta = parseFloat(betaInput.value);
        if (isNaN(beta)) beta = 0;
        beta = Math.max(0, Math.min(0.999999, beta));
        betaInput.value = beta.toFixed(3);
        betaSlider.value = beta.toFixed(3);
        const vInput = document.getElementById("v-input");
        vInput.value = (beta * C).toExponential(3);
      }

      function updateBetaFromVelocity() {
        const vInput = document.getElementById("v-input");
        let v = parseFloat(vInput.value);
        if (isNaN(v) || v < 0) v = 0;
        if (v >= C) v = C * 0.999999;
        vInput.value = v.toExponential(3);
        const beta = v / C;
        const betaInput = document.getElementById("beta-input");
        const betaSlider = document.getElementById("beta-slider");
        betaInput.value = beta.toFixed(3);
        betaSlider.value = beta.toFixed(3);
      }

      function getMassInKg() {
        const massValue = parseFloat(
          document.getElementById("mass-value").value
        );
        const unit = document.getElementById("mass-unit").value;
        if (!isFinite(massValue) || massValue <= 0) return NaN;

        switch (unit) {
          case "kg":
            return massValue;
          case "g":
            return massValue / 1000;
          case "MeV":
            return massValue * 1e6 * EV_C2_TO_KG;
          case "GeV":
            return massValue * 1e9 * EV_C2_TO_KG;
          case "proton":
            return PROTON_MASS;
          case "electron":
            return ELECTRON_MASS;
          default:
            return NaN;
        }
      }

      function calculateRelativisticKE() {
        const warning = document.getElementById("warning-msg");
        warning.classList.add("hidden");
        warning.textContent = "";

        let m = getMassInKg();
        if (!isFinite(m) || m <= 0) {
          warning.textContent = "Please enter a valid positive mass.";
          warning.classList.remove("hidden");
          return;
        }

        const modeBetaActive = document
          .getElementById("mode-beta")
          .classList.contains("bg-blue-600");
        let v;
        if (modeBetaActive) {
          let beta = parseFloat(document.getElementById("beta-input").value);
          if (!isFinite(beta) || beta < 0) beta = 0;
          if (beta >= 1) beta = 0.999999;
          v = beta * C;
        } else {
          v = parseFloat(document.getElementById("v-input").value);
          if (!isFinite(v) || v < 0) v = 0;
          if (v >= C) {
            warning.textContent =
              "Velocity must be less than the speed of light c.";
            warning.classList.remove("hidden");
            v = C * 0.999999;
          }
        }

        const beta = v / C;
        const gamma = 1 / Math.sqrt(1 - beta * beta);

        const restEnergyJ = m * C * C;
        const totalEnergyJ = gamma * restEnergyJ;
        const keRelJ = (gamma - 1) * restEnergyJ;
        const keClassJ = 0.5 * m * v * v;

        const restEnergyEv = restEnergyJ * J_TO_EV;
        const keRelEv = keRelJ * J_TO_EV;

        let correctionPercent = NaN;
        if (keClassJ > 0) {
          correctionPercent = ((keRelJ - keClassJ) / keClassJ) * 100;
        }

        document.getElementById("gamma-output").textContent = gamma.toFixed(6);

        document.getElementById("ke-rel-output").innerHTML = formatSci(keRelJ);
        document.getElementById("ke-rel-ev-output").innerHTML =
          formatSci(keRelEv);

        document.getElementById("rest-energy-output").innerHTML =
          formatSci(restEnergyJ);
        document.getElementById("rest-energy-ev-output").innerHTML =
          formatSci(restEnergyEv);

        document.getElementById("total-energy-output").innerHTML =
          formatSci(totalEnergyJ);

        document.getElementById("ke-class-output").innerHTML =
          formatSci(keClassJ);

        if (isFinite(correctionPercent)) {
          const sign = correctionPercent >= 0 ? "+" : "";
          document.getElementById("rel-correction-output").textContent =
            sign + correctionPercent.toFixed(1) + "%";
        } else {
          document.getElementById("rel-correction-output").textContent = "—";
        }
      }

      function resetCalculator() {
        document.getElementById("mass-value").value = 1.0;
        document.getElementById("mass-unit").value = "kg";
        document.getElementById("beta-input").value = 0.8;
        document.getElementById("beta-slider").value = 0.8;
        updateVelocityFromBeta();
        calculateRelativisticKE();
      }

      document.addEventListener("DOMContentLoaded", () => {
        const betaInput = document.getElementById("beta-input");
        const betaSlider = document.getElementById("beta-slider");
        const vInput = document.getElementById("v-input");

        betaInput.addEventListener("input", updateVelocityFromBeta);
        betaSlider.addEventListener("input", () => {
          betaInput.value = parseFloat(betaSlider.value).toFixed(3);
          updateVelocityFromBeta();
        });

        vInput.addEventListener("change", updateBetaFromVelocity);

        document.getElementById("mass-unit").addEventListener("change", (e) => {
          const unit = e.target.value;
          const massInput = document.getElementById("mass-value");
          if (unit === "proton") {
            massInput.value = 1;
          } else if (unit === "electron") {
            massInput.value = 1;
          }
        });

        document.getElementById("mode-beta").addEventListener("click", () => {
          document
            .getElementById("mode-beta")
            .classList.add("bg-blue-600", "text-white");
          document
            .getElementById("mode-beta")
            .classList.remove("bg-white", "text-gray-700");
          document
            .getElementById("mode-v")
            .classList.remove("bg-blue-600", "text-white");
          document
            .getElementById("mode-v")
            .classList.add("bg-white", "text-gray-700");
          document.getElementById("beta-container").classList.remove("hidden");
          document.getElementById("v-container").classList.add("hidden");
        });

        document.getElementById("mode-v").addEventListener("click", () => {
          document
            .getElementById("mode-v")
            .classList.add("bg-blue-600", "text-white");
          document
            .getElementById("mode-v")
            .classList.remove("bg-white", "text-gray-700");
          document
            .getElementById("mode-beta")
            .classList.remove("bg-blue-600", "text-white");
          document
            .getElementById("mode-beta")
            .classList.add("bg-white", "text-gray-700");
          document.getElementById("beta-container").classList.add("hidden");
          document.getElementById("v-container").classList.remove("hidden");
          updateVelocityFromBeta();
        });

        document
          .getElementById("calculate-btn")
          .addEventListener("click", calculateRelativisticKE);
        document
          .getElementById("reset-btn")
          .addEventListener("click", resetCalculator);

        // Initial sync and calculation
        updateVelocityFromBeta();
        calculateRelativisticKE();
      });

      // Mobile menu script (from template)
      document.addEventListener("DOMContentLoaded", () => {
        const toggle = document.getElementById("mobile-menu-toggle");
        const menu = document.getElementById("mobile-menu");
        if (toggle && menu) {
          toggle.addEventListener("click", () => {
            const isHidden = menu.classList.contains("hidden");
            menu.classList.toggle("hidden", !isHidden);
            toggle.setAttribute("aria-expanded", isHidden ? "true" : "false");
          });
        }
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
