    <script>
      // Basic linear algebra helpers with numeric stability
      function cloneMatrix(A) {
        return A.map((row) => row.slice());
      }

      function isZero(x, eps = 1e-10) {
        return Math.abs(x) < eps;
      }

      function formatNumber(x, digits = 6) {
        if (typeof x !== "number" || !isFinite(x)) return String(x);
        if (Math.abs(x) < 1e-12) x = 0;
        const s = x.toFixed(digits);
        // trim trailing zeros
        return s.replace(/\.?0+$/, "");
      }

      function formatComplex(re, im, digits = 6) {
        const r = formatNumber(re, digits);
        const i = formatNumber(Math.abs(im), digits);
        if (isZero(im)) return r;
        const sign = im >= 0 ? "+" : "-";
        if (isZero(re)) return (im >= 0 ? "" : "-") + i + "i";
        return r + " " + sign + " " + i + "i";
      }

      function matrixDeterminant(A) {
        const n = A.length;
        if (n === 1) return A[0][0];
        if (n === 2) {
          return A[0][0] * A[1][1] - A[0][1] * A[1][0];
        }
        if (n === 3) {
          const a = A[0][0],
            b = A[0][1],
            c = A[0][2];
          const d = A[1][0],
            e = A[1][1],
            f = A[1][2];
          const g = A[2][0],
            h = A[2][1],
            i = A[2][2];
          return (
            a * (e * i - f * h) - b * (d * i - f * g) + c * (d * h - e * g)
          );
        }
        // generic LU (not needed here)
        throw new Error("Only 1x1, 2x2, 3x3 supported");
      }

      function matrixTrace(A) {
        return A.reduce((s, row, i) => s + row[i], 0);
      }

      function subtractLambdaI(A, lambda) {
        const n = A.length;
        const M = cloneMatrix(A);
        for (let i = 0; i < n; i++) {
          M[i][i] -= lambda;
        }
        return M;
      }

      // Gaussian elimination to compute null space basis of (A)x = 0
      function nullSpace(A, eps = 1e-10) {
        const m = A.length;
        const n = A[0].length;
        const M = cloneMatrix(A);
        let lead = 0;
        const pivotCols = [];
        for (let r = 0; r < m && lead < n; lead++) {
          let i = r;
          while (i < m && Math.abs(M[i][lead]) < eps) i++;
          if (i === m) continue;
          // swap
          [M[r], M[i]] = [M[i], M[r]];
          const val = M[r][lead];
          for (let j = lead; j < n; j++) M[r][j] / val;
          for (let i2 = 0; i2 < m; i2++) {
            if (i2 === r) continue;
            const factor = M[i2][lead];
            if (Math.abs(factor) < eps) continue;
            for (let j = lead; j < n; j++) {
              M[i2][j] -= factor * M[r][j];
            }
          }
          pivotCols.push(lead);
          r++;
        }
        const freeCols = [];
        for (let j = 0; j < n; j++) {
          if (!pivotCols.includes(j)) freeCols.push(j);
        }
        if (freeCols.length === 0) {
          return []; // only trivial solution
        }
        const basis = [];
        for (const free of freeCols) {
          const v = new Array(n).fill(0);
          v[free] = 1;
          for (let i = 0; i < pivotCols.length; i++) {
            const pc = pivotCols[i];
            v[pc] = -M[i][free];
          }
          basis.push(v);
        }
        return basis;
      }

      // Eigenvalues for 2x2: exact quadratic formula (possibly complex)
      function eigenvalues2x2(A) {
        const a = A[0][0],
          b = A[0][1],
          c = A[1][0],
          d = A[1][1];
        const tr = a + d;
        const det = a * d - b * c;
        const disc = tr * tr - 4 * det;
        if (disc >= 0) {
          const sqrtDisc = Math.sqrt(disc);
          return [
            { re: (tr + sqrtDisc) / 2, im: 0 },
            { re: (tr - sqrtDisc) / 2, im: 0 },
          ];
        } else {
          const sqrtAbs = Math.sqrt(-disc);
          return [
            { re: tr / 2, im: sqrtAbs / 2 },
            { re: tr / 2, im: -sqrtAbs / 2 },
          ];
        }
      }

      // Numeric eigenvalues for 3x3 using power iteration + deflation (simple, not for production large n)
      function eigenvalues3x3Numeric(A) {
        const n = 3;
        const maxIter = 200;
        const eps = 1e-10;
        const eigenvals = [];
        let B = cloneMatrix(A);

        function powerIteration(M) {
          let v = [1, 0, 0];
          for (let iter = 0; iter < maxIter; iter++) {
            const w = [
              M[0][0] * v[0] + M[0][1] * v[1] + M[0][2] * v[2],
              M[1][0] * v[0] + M[1][1] * v[1] + M[1][2] * v[2],
              M[2][0] * v[0] + M[2][1] * v[1] + M[2][2] * v[2],
            ];
            const norm = Math.hypot(w[0], w[1], w[2]) || 1;
            v = w.map((x) => x / norm);
          }
          const Av = [
            M[0][0] * v[0] + M[0][1] * v[1] + M[0][2] * v[2],
            M[1][0] * v[0] + M[1][1] * v[1] + M[1][2] * v[2],
            M[2][0] * v[0] + M[2][1] * v[1] + M[2][2] * v[2],
          ];
          const num = v[0] * Av[0] + v[1] * Av[1] + v[2] * Av[2];
          const den = v[0] * v[0] + v[1] * v[1] + v[2] * v[2];
          return num / den;
        }

        for (let k = 0; k < n; k++) {
          const lambda = powerIteration(B);
          eigenvals.push({ re: lambda, im: 0 });
          // Deflate: B = B - lambda * I
          for (let i = 0; i < n; i++) {
            B[i][i] -= lambda;
          }
        }
        return eigenvals;
      }

      function computeEigen(A) {
        const n = A.length;
        if (n === 2) {
          const eigs = eigenvalues2x2(A);
          const results = [];
          for (const ev of eigs) {
            if (!isZero(ev.im)) {
              results.push({
                lambda: ev,
                complex: true,
                algebraicMultiplicity: 1,
                geometricMultiplicity: 0,
                eigenvectors: [],
              });
            } else {
              const lambda = ev.re;
              const M = subtractLambdaI(A, lambda);
              const basis = nullSpace(M);
              const gm = basis.length;
              results.push({
                lambda: { re: lambda, im: 0 },
                complex: false,
                algebraicMultiplicity: 1,
                geometricMultiplicity: gm,
                eigenvectors: basis,
              });
            }
          }
          // merge equal real eigenvalues (within tolerance)
          const merged = [];
          eigLoop: for (const r of results) {
            if (r.complex) {
              merged.push(r);
              continue;
            }
            for (const m of merged) {
              if (!m.complex && Math.abs(m.lambda.re - r.lambda.re) < 1e-8) {
                m.algebraicMultiplicity += r.algebraicMultiplicity;
                m.geometricMultiplicity += r.geometricMultiplicity;
                m.eigenvectors = m.eigenvectors.concat(r.eigenvectors);
                continue eigLoop;
              }
            }
            merged.push(r);
          }
          return merged;
        } else if (n === 3) {
          const eigs = eigenvalues3x3Numeric(A);
          // merge close eigenvalues
          const merged = [];
          eigLoop2: for (const ev of eigs) {
            let placed = false;
            for (const m of merged) {
              if (Math.abs(m.lambda.re - ev.re) < 1e-6) {
                m.algebraicMultiplicity += 1;
                placed = true;
                break;
              }
            }
            if (!placed) {
              merged.push({
                lambda: { re: ev.re, im: 0 },
                complex: false,
                algebraicMultiplicity: 1,
                geometricMultiplicity: 0,
                eigenvectors: [],
              });
            }
          }
          // compute eigenspaces
          for (const m of merged) {
            const M = subtractLambdaI(A, m.lambda.re);
            const basis = nullSpace(M);
            m.geometricMultiplicity = basis.length;
            m.eigenvectors = basis;
          }
          return merged;
        } else {
          throw new Error("Only 2x2 and 3x3 matrices are supported.");
        }
      }

      function readMatrix() {
        const grid = document.getElementById("matrix-grid");
        const inputs = grid.querySelectorAll("input.matrix-input");
        const size = Math.sqrt(inputs.length);
        const n = size | 0;
        const A = Array.from({ length: n }, () => Array(n).fill(0));
        inputs.forEach((inp) => {
          const r = parseInt(inp.dataset.row, 10);
          const c = parseInt(inp.dataset.col, 10);
          const val = inp.value.trim();
          if (val === "") throw new Error("All matrix entries must be filled.");
          const num = Number(val);
          if (!isFinite(num))
            throw new Error("Matrix entries must be real numbers.");
          A[r][c] = num;
        });
        return A;
      }

      function setMatrix(A) {
        const n = A.length;
        const grid = document.getElementById("matrix-grid");
        grid.innerHTML = "";
        grid.className = "grid gap-2 grid-cols-" + n;
        for (let i = 0; i < n; i++) {
          for (let j = 0; j < n; j++) {
            const inp = document.createElement("input");
            inp.type = "number";
            inp.step = "any";
            inp.className = "matrix-input border rounded px-2 py-1 text-center";
            inp.dataset.row = String(i);
            inp.dataset.col = String(j);
            inp.value = A[i][j];
            grid.appendChild(inp);
          }
        }
      }

      function changeSize(n) {
        const A = Array.from({ length: n }, () => Array(n).fill(0));
        if (n === 2) {
          A[0][0] = 2;
          A[0][1] = 1;
          A[1][0] = 0;
          A[1][1] = 3;
        } else {
          A[0][0] = 1;
          A[0][1] = 0;
          A[0][2] = 0;
          A[1][0] = 0;
          A[1][1] = 2;
          A[1][2] = 0;
          A[2][0] = 0;
          A[2][1] = 0;
          A[2][2] = 3;
        }
        setMatrix(A);
      }

      function renderResults(A, eigenData, showSteps) {
        const n = A.length;
        const summaryEl = document.getElementById("results-summary");
        const eigValsEl = document.getElementById("results-eigenvalues");
        const eigVecsEl = document.getElementById("results-eigenvectors");
        const diagEl = document.getElementById("results-diagonalization");
        const stepsEl = document.getElementById("results-steps");
        const placeholderEl = document.getElementById("results-placeholder");

        placeholderEl.classList.add("hidden");
        summaryEl.innerHTML = "";
        eigValsEl.innerHTML = "";
        eigVecsEl.innerHTML = "";
        diagEl.innerHTML = "";
        stepsEl.innerHTML = "";

        const trace = matrixTrace(A);
        const det = matrixDeterminant(A);

        summaryEl.innerHTML = `
      <div class="bg-blue-50 border border-blue-100 rounded p-3 text-sm">
        <div class="font-semibold mb-1">Matrix summary</div>
        <div class="mono text-xs overflow-x-auto mb-1">A = ${JSON.stringify(
          A
        ).replace(/\],\[/g, "],\n[")}</div>
        <div>Size: ${n} × ${n}</div>
        <div>Trace: <span class="font-mono">${formatNumber(trace)}</span></div>
        <div>Determinant: <span class="font-mono">${formatNumber(
          det
        )}</span></div>
      </div>
    `;

        // Eigenvalues list
        let htmlVals =
          '<h3 class="font-semibold mb-2">Eigenvalues</h3><ul class="list-disc list-inside text-sm">';
        let totalGeom = 0;
        let totalAlg = 0;
        eigenData.forEach((e, idx) => {
          const label = e.complex
            ? formatComplex(e.lambda.re, e.lambda.im)
            : formatNumber(e.lambda.re);
          totalGeom += e.geometricMultiplicity;
          totalAlg += e.algebraicMultiplicity;
          htmlVals += `
        <li>
          <span class="font-mono">λ<sub>${idx + 1}</sub> = ${label}</span>
          <span class="badge bg-gray-100 text-gray-700 ml-1">alg mult: ${
            e.algebraicMultiplicity
          }</span>
          <span class="badge bg-gray-100 text-gray-700 ml-1">geom mult: ${
            e.geometricMultiplicity
          }</span>
          ${
            e.complex
              ? '<span class="badge bg-purple-100 text-purple-700 ml-1">complex</span>'
              : ""
          }
        </li>
      `;
        });
        htmlVals += "</ul>";
        eigValsEl.innerHTML = htmlVals;

        // Eigenvectors / eigenspaces
        let htmlVecs =
          '<h3 class="font-semibold mb-2">Eigenvectors &amp; eigenspaces</h3>';
        eigenData.forEach((e, idx) => {
          const label = e.complex
            ? formatComplex(e.lambda.re, e.lambda.im)
            : formatNumber(e.lambda.re);
          htmlVecs += `<div class="mb-2 text-sm"><div class="font-medium">For λ<sub>${
            idx + 1
          }</sub> = <span class="font-mono">${label}</span>:</div>`;
          if (e.complex) {
            htmlVecs += `<div class="text-gray-700 ml-4">Complex eigenvalues are shown; this calculator currently does not compute complex eigenvectors.</div>`;
          } else if (!e.eigenvectors || e.eigenvectors.length === 0) {
            htmlVecs += `<div class="text-gray-700 ml-4">No non‑zero real eigenvectors (defective or complex eigenspace).</div>`;
          } else {
            htmlVecs += `<div class="ml-4 text-gray-700">Basis for eigenspace E<sub>${
              idx + 1
            }</sub>:</div><ul class="ml-8 list-disc text-gray-800">`;
            e.eigenvectors.forEach((v, j) => {
              const vecStr =
                "[" + v.map((x) => formatNumber(x)).join(", ") + "]";
              htmlVecs += `<li class="font-mono text-xs">v<sub>${idx + 1},${
                j + 1
              }</sub> = ${vecStr}</li>`;
            });
            htmlVecs += "</ul>";
          }
          htmlVecs += "</div>";
        });
        eigVecsEl.innerHTML = htmlVecs;

        // Diagonalization
        const diagPossible =
          totalGeom >= n && eigenData.every((e) => !e.complex);
        diagEl.innerHTML = `
      <h3 class="font-semibold mb-2">Diagonalization</h3>
      <p class="text-sm">
        Sum of geometric multiplicities: <span class="font-mono">${totalGeom}</span> (matrix size n = ${n}).
      </p>
      <p class="text-sm mt-1">
        ${
          diagPossible
            ? '<span class="text-green-700 font-medium">This matrix is diagonalizable over ℝ (it has enough linearly independent real eigenvectors).</span>'
            : '<span class="text-red-700 font-medium">This matrix is not diagonalizable over ℝ (insufficient real eigenvectors or complex eigenvalues).</span>'
        }
      </p>
    `;

        // Steps (only detailed for 2x2)
        if (showSteps) {
          if (n === 2) {
            const a = A[0][0],
              b = A[0][1],
              c = A[1][0],
              d = A[1][1];
            const tr = a + d;
            const det2 = a * d - b * c;
            const disc = tr * tr - 4 * det2;
            let stepsHtml = `
          <h3 class="font-semibold mb-2">Step-by-step (2×2 case)</h3>
          <ol class="list-decimal list-inside text-sm space-y-2">
            <li>
              <strong>Form A − λI:</strong><br>
              \\[
                A - \\lambda I =
                \\begin{bmatrix}
                  ${formatNumber(a)} - \\lambda & ${formatNumber(b)} \\\\
                  ${formatNumber(c)} & ${formatNumber(d)} - \\lambda
                \\end{bmatrix}.
              \\]
            </li>
            <li>
              <strong>Compute the characteristic polynomial:</strong><br>
              \\[
                p(\\lambda) = \\det(A - \\lambda I)
                = (${formatNumber(a)} - \\lambda)(${formatNumber(
              d
            )} - \\lambda) - (${formatNumber(b)})(${formatNumber(c)}).
              \\]
              Expanding:
              \\[
                p(\\lambda) = \\lambda^2 - (${formatNumber(
                  tr
                )})\\lambda + (${formatNumber(det2)}).
              \\]
            </li>
            <li>
              <strong>Solve p(λ) = 0:</strong><br>
              \\[
                \\lambda_{1,2} = \\frac{${formatNumber(
                  tr
                )} \\pm \\sqrt{${formatNumber(tr)}^2 - 4\\cdot${formatNumber(
              det2
            )}}}{2}
                = \\frac{${formatNumber(tr)} \\pm \\sqrt{${formatNumber(
              disc
            )}}}{2}.
              \\]
            </li>
        `;
            eigenData.forEach((e, idx) => {
              const label = e.complex
                ? formatComplex(e.lambda.re, e.lambda.im)
                : formatNumber(e.lambda.re);
              stepsHtml += `
            <li>
              <strong>Find eigenvectors for λ<sub>${
                idx + 1
              }</sub> = ${label}:</strong><br>
          `;
              if (e.complex) {
                stepsHtml += `
              For complex eigenvalues, eigenvectors live in \\(\\mathbb{C}^2\\). This calculator focuses on real eigenvectors, so we do not expand these steps here.
            </li>
            `;
              } else {
                const lam = e.lambda.re;
                const Aminus = subtractLambdaI(A, lam);
                stepsHtml += `
              Solve \\((A - \\lambda I)\\mathbf{v} = 0\\) with
              \\[
                A - \\lambda I =
                \\begin{bmatrix}
                  ${formatNumber(Aminus[0][0])} & ${formatNumber(
                  Aminus[0][1]
                )} \\\\
                  ${formatNumber(Aminus[1][0])} & ${formatNumber(Aminus[1][1])}
                \\end{bmatrix}.
              \\]
              Any non‑zero solution is an eigenvector. One basis vector found numerically is:
              <br>
            `;
                if (e.eigenvectors && e.eigenvectors.length > 0) {
                  const v = e.eigenvectors[0];
                  const vecStr =
                    "[" + v.map((x) => formatNumber(x)).join(", ") + "]";
                  stepsHtml += `<span class="font-mono text-xs">v<sub>${
                    idx + 1
                  }</sub> = ${vecStr}</span>`;
                } else {
                  stepsHtml += `<span class="text-gray-700">No non‑zero real eigenvector (defective or complex eigenspace).</span>`;
                }
                stepsHtml += "</li>";
              }
            });
            stepsHtml += "</ol>";
            stepsEl.innerHTML = stepsHtml;
          } else {
            stepsEl.innerHTML = `
          <h3 class="font-semibold mb-2">Step-by-step (3×3 overview)</h3>
          <p class="text-sm">
            For 3×3 matrices, the calculator uses a numeric eigenvalue algorithm (power iteration with deflation) and then
            computes eigenspaces by solving \\((A - \\lambda I)\\mathbf{v} = 0\\) using Gaussian elimination.
          </p>
          <ol class="list-decimal list-inside text-sm space-y-1">
            <li>Approximate a dominant eigenvalue of A using repeated multiplication by a random vector.</li>
            <li>Deflate the matrix by subtracting this eigenvalue from the diagonal.</li>
            <li>Repeat to approximate remaining eigenvalues.</li>
            <li>For each eigenvalue, solve \\((A - \\lambda I)\\mathbf{v} = 0\\) to obtain a basis of eigenvectors.</li>
          </ol>
          <p class="text-sm text-gray-600">
            For exact symbolic work with 3×3 matrices, most textbooks derive the cubic characteristic polynomial and solve it analytically.
          </p>
        `;
          }
        }
      }

      document.addEventListener("DOMContentLoaded", () => {
        const sizeButtons = document.querySelectorAll(".size-btn");
        sizeButtons.forEach((btn) => {
          btn.addEventListener("click", () => {
            sizeButtons.forEach((b) => {
              b.classList.remove(
                "border-blue-600",
                "text-blue-600",
                "bg-blue-50"
              );
              b.classList.add("border-gray-300", "text-gray-700");
            });
            btn.classList.add("border-blue-600", "text-blue-600", "bg-blue-50");
            btn.classList.remove("border-gray-300", "text-gray-700");
            const n = parseInt(btn.dataset.size, 10);
            changeSize(n);
          });
        });

        document
          .getElementById("btn-example-diagonal")
          .addEventListener("click", () => {
            const currentSize =
              Math.sqrt(
                document.querySelectorAll("#matrix-grid input").length
              ) | 0;
            if (currentSize === 2) {
              setMatrix([
                [1, 0],
                [0, 4],
              ]);
            } else {
              setMatrix([
                [1, 0, 0],
                [0, 2, 0],
                [0, 0, 3],
              ]);
            }
          });

        document
          .getElementById("btn-example-rotation")
          .addEventListener("click", () => {
            // 2D rotation by 90 degrees: [[0,-1],[1,0]]
            const currentSize =
              Math.sqrt(
                document.querySelectorAll("#matrix-grid input").length
              ) | 0;
            if (currentSize !== 2) {
              // switch to 2x2
              document.querySelector('.size-btn[data-size="2"]').click();
            }
            setMatrix([
              [0, -1],
              [1, 0],
            ]);
          });

        document
          .getElementById("btn-example-defective")
          .addEventListener("click", () => {
            // Jordan block [[1,1],[0,1]]
            const currentSize =
              Math.sqrt(
                document.querySelectorAll("#matrix-grid input").length
              ) | 0;
            if (currentSize !== 2) {
              document.querySelector('.size-btn[data-size="2"]').click();
            }
            setMatrix([
              [1, 1],
              [0, 1],
            ]);
          });

        document.getElementById("btn-clear").addEventListener("click", () => {
          const grid = document.getElementById("matrix-grid");
          grid.querySelectorAll("input").forEach((inp) => (inp.value = ""));
          document.getElementById("results-summary").innerHTML = "";
          document.getElementById("results-eigenvalues").innerHTML = "";
          document.getElementById("results-eigenvectors").innerHTML = "";
          document.getElementById("results-diagonalization").innerHTML = "";
          document.getElementById("results-steps").innerHTML = "";
          document
            .getElementById("results-placeholder")
            .classList.remove("hidden");
          document.getElementById("input-error").classList.add("hidden");
        });

        document.getElementById("btn-compute").addEventListener("click", () => {
          const errEl = document.getElementById("input-error");
          errEl.classList.add("hidden");
          errEl.textContent = "";
          try {
            const A = readMatrix();
            const eigenData = computeEigen(A);
            const showSteps = document.getElementById("chk-show-steps").checked;
            renderResults(A, eigenData, showSteps);
            if (window.MathJax && window.MathJax.typeset) {
              window.MathJax.typeset();
            }
          } catch (e) {
            errEl.textContent =
              e.message || "An error occurred while computing eigenvalues.";
            errEl.classList.remove("hidden");
          }
        });
      });

      window.MathJax = {
        tex: {
          inlineMath: [
            ["\\(", "\\)"],
            ["$", "$"],
          ],
          displayMath: [
            ["$", "$"],
            ["\\[", "\\]"],
          ],
        },
        svg: { fontCache: "global" },
      };
    </script>
